        <record id="email_template_internal_transfer" model="mail.template">
            <field name="name">Internal Transfer</field>
            <field name="email_from">${ctx.get('email_from')}</field>
            <field name="email_to">${ctx.get('email_to')}</field>
            <field name="subject">Expired Internal Transfer Request</field>
            <field name="model_id" ref="equip3_inventory_operation.model_internal_transfer"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[
                <p>Dear ${object.create_uid.name},</p>
                <p>Your Internal Transfer Request Has Expired.</p>
                <p>Internal Transfer no.: ${object.name}</p>
                <p>Expiry Date: ${object.expiry_date}
                <table cellspacing="0" cellpadding="0" style="width:900px;border-collapse:collapse;background:inherit;color:inherit;border:1px solid black;">
                    <thead style="border:1px solid black;">
                        <th class="text-center" style="border:1px solid black;">Product</th>
                        <th class="text-center" style="border:1px solid black;">Quantity</th>
                        <th class="text-center" style="border:1px solid black;">Source Location</th>
                        <th class="text-center" style="border:1px solid black;">Destination Location</th>
                    </thead>
                    <tbody style="border:1px solid black;">
                        % for product_line_id in object.product_line_ids:
                            <tr style="border:1px solid black;">
                                <td style="border:1px solid black;text-align:center;">${product_line_id.product_id.display_name}</td>
                                <td style="border:1px solid black;text-align:center;">${product_line_id.qty}</td>
                                <td style="border:1px solid black;text-align:center;">${product_line_id.source_location_id.display_name}</td>
                                <td style="border:1px solid black;text-align:center;">${product_line_id.destination_location_id.display_name}</td>
                            </tr>
                        % endfor
                    </tbody>
                </table>
                <div style = "margin: 16px;">
                    <a href=${ctx.get('url')} style = "padding: 5px 10px; font-size: 12px; line-height: 18px;
                     color: #FFFFFF; border-color:#875A7B; text-decoration: none; display: inline-block; 
                     margin-bottom: 0px; font-weight: 400; text-align: center; vertical-align: middle; 
                     cursor: pointer; white-space: nowrap; background-image: none; background-color: #875A7B;
                     <!-- border: 1px solid #875A7B; border-radius:3px">View ${object.name}</a></div>
                    <p>Thank You.</p>
                ]]>
            </field>
        </record>


