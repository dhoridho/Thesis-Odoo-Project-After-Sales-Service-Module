<odoo>
    <data>
        <record id="product_brand_form_view" model="ir.ui.view">
            <field name="name">Product Brand</field>
            <field name="model">product.brand</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button"
                                    name="get_products_in_brand_method"
                                    icon="fa-th-list"
                                    type="object">
<!--                                    context="{'search_default_categ_id': active_id, 'default_categ_id': active_id, 'group_expand': True}">-->
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value"><field name="product_count"/></span>
                                    <span class="o_stat_text"> Products</span>
                                </div>
                            </button>
                        </div>
                        <group>
                            <field name="brand_name"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="product_brand" model="ir.ui.view">
            <field name="name">Product Brand</field>
            <field name="model">product.brand</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="brand_name"/>
                </tree>
            </field>
        </record>

        <record id="product_brand_action" model="ir.actions.act_window">
            <field name="name">Product Brand</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.brand</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Brand"
                  id="menu_product_brand"
                  action="product_brand_action"
                  parent='stock.menu_product_in_config_stock'
                  sequence="2"
        />


    </data>
</odoo>