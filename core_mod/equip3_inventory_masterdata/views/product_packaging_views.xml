<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_view_product_packaging_form_masterdata" model="ir.ui.view">
        <field name="name">view.product.packaging.form.inherit</field>
        <field name="model">product.packaging</field>
        <field name="inherit_id" ref="product.product_packaging_form_view"/>
        <field name="arch" type="xml">
        
             <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="placeholder">Packaging Name</attribute>
             </xpath>

             <xpath expr="//group" position="after">
                <group string="Traceability">
                    <group>
                        <field name="packages_barcode_prefix"/>
                        <field name="digits" attrs="{'required': [('packages_barcode_prefix', '!=', False)]}"/>
                        <field name="current_sequence" force_save="1" readonly="1"/>
                    </group>
                </group>
             </xpath>
             
        </field>
    </record>

</odoo>
