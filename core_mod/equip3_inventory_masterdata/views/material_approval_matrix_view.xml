<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_form_approval_matrix_material" model="ir.ui.view">
        <field name="name">approval.matrix.material.form</field>
        <field name="model">mr.approval.matrix</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="company_id" force_save="1" />
                            <field name="branch_id" />
                        </group>
                        <group>
                            <field name="warehouse_id"/>
                            <field name="create_date" />
                            <field name="create_uid"/>
                            <field name="approval_line_count" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Approver Line">
                            <field name="mr_approval_matrix_line_ids" context="{'mr_approval_matrix_line_ids': mr_approval_matrix_line_ids}">
                                <tree editable="bottom" class="class_container_approver_matrix"> 
                                    <field name="sequence" widget="handle"/>
                                    <field name="sequence2" force_save="1" readonly="1" class="approver_matrix_sequence"/>
                                    <field name="user_ids" widget="many2many_tags" />
                                    <field name="minimum_approver" />
                                </tree>
                            </field>
                        </page>
                        <page name="location_child_ids" string="Details">
                            <field name="location_child_ids" create="0">
                                <tree create="false" no_create_edit="1">
                                    <field name="display_name" string="Location Name"/>
                                    <field name="usage"/>
                                    <field name="company_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_tree_approval_matrix_material" model="ir.ui.view">
        <field name="name">approval.matrix.material.tree</field>
        <field name="model">mr.approval.matrix</field>
        <field name="arch" type="xml">
            <tree string="Material Approval Matrix" >
                <field name ="name"/>
                <field name="company_id" optional="hide"/>
                <field name="branch_id" optional="hide"/>
                <field name="warehouse_id" />
                <field name="approval_line_count"/>
            </tree>
        </field>
    </record>

    <record id="action_approval_matrix_material" model="ir.actions.act_window">
        <field name="name">Material Approval Matrix</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mr.approval.matrix</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem
        id="approval_matrix_material_configuration_menu"
        name="Approval Matrix"
        parent="stock.menu_stock_config_settings"
        sequence="10"/>
    
    <menuitem
        id="approval_matrix_material_menu"
        name="Material Request Approval Matrix"
        parent="approval_matrix_material_configuration_menu"
        action="action_approval_matrix_material"
        sequence="1"/>
    

</odoo>
