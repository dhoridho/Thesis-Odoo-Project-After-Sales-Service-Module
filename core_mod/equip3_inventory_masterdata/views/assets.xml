<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="equip3_inventory_masterdata_assets_backend" name="equip3_inventory_control assets" inherit_id="web.assets_backend">
        <xpath expr="//script[last()]" position="after">
            <script type="text/javascript" src="/equip3_inventory_masterdata/static/src/js/renderer.js"></script>
            <script type="text/javascript" src="/equip3_inventory_masterdata/static/src/js/location_removal_priority.js"></script>
            <script type="text/javascript" src="/equip3_inventory_masterdata/static/src/js/stock_quant.js"></script>

            <script type="text/javascript" src="/equip3_inventory_masterdata/static/src/js/report_stock_forecasted.js"></script>
            <script type="text/javascript" src="/equip3_inventory_masterdata/static/src/js/uom_form_view.js"></script>
        </xpath>

        <xpath expr="//link[last()]" position="after">
            <link rel="stylesheet" type="text/scss" href="/equip3_inventory_masterdata/static/src/scss/table_view.scss"/>
            <link rel="stylesheet" type="text/scss" href="/equip3_inventory_masterdata/static/src/scss/report_stock_forecasted.scss"/>
        </xpath>
    </template>

    <template id="assets_common_replenishment_report" name="Forecasted Inventory CSS" inherit_id="web.report_assets_common">
        <xpath expr="//link[last()]" position="after">
            <link rel="stylesheet" type="text/scss" href="/equip3_inventory_masterdata/static/src/scss/report_stock_forecasted.scss"/>
        </xpath>
    </template>
</odoo>
