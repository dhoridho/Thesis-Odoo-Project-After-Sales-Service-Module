<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_sale_stock_control_res_user_inherit_masterdata" model="ir.ui.view">
        <field name="name">res.users.form</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="sale_stock.res_users_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='Warehouses']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//group[@name='Warehouses']//field[@name='property_warehouse_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_view_location_security_res_user_inherit_masterdata" model="ir.ui.view">
        <field name="name">res.users.form</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="warehouse_stock_restrictions.view_location_security_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='restrict_locations']" position="attributes">
                <attribute name="string">Restrict Warehouse</attribute>
            </xpath>
            <xpath expr="//field[@name='restrict_locations']/.." position="attributes">
                <attribute name="string"></attribute>
            </xpath>
            <xpath expr="//field[@name='restrict_locations']" position="after">
                <field name="default_warehouse_id" attrs="{'required': [('restrict_locations','=', True)], 'invisible': [('restrict_locations','=', False)]}"/>
                <field name="allowed_warehouse_ids" widget="many2many_tags" attrs="{'invisible': [('restrict_locations','=', False)]}"/>
            </xpath>
            <xpath expr="//field[@name='stock_location_ids']/.." position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_warehouse_stock_restrictions_res_user_inherit_masterdata" model="ir.ui.view">
        <field name="name">res.users.form</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="warehouse_stock_restrictions.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_picking_type_ids']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <!-- <xpath expr="//field[@name='analytic_tag_ids']" position="after">
                <field name="branch_ids" widget="many2many_tags"/>
                <field name="branch_id"/>
            </xpath> -->
        </field>
    </record>

