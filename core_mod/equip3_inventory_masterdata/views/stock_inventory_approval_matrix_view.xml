<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_form_approval_matrix_stock_inventory" model="ir.ui.view">
        <field name="name">stock.inventory.approval.matrix.form</field>
        <field name="model">stock.inventory.approval.matrix</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="company_id" force_save="1" />
                            <field name="branch_id" />
                        </group>
                        <group>
                            <field name="warehouse_id"/>
                            <field name="create_date" />
                            <field name="create_uid"/>
                            <field name="approval_line_count" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Approver Line">
                            <field name="si_approval_matrix_line_ids" context="{'si_approval_matrix_line_ids': si_approval_matrix_line_ids}">
                                <tree editable="bottom" class="class_container_approver_matrix"> 
                                    <field name="sequence" widget="handle"/>
                                    <field name="sequence2" force_save="1" readonly="1" class="approver_matrix_sequence"/>
                                    <field name="user_ids" widget="many2many_tags" />
                                    <field name="minimum_approver" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_tree_approval_stock_inventory" model="ir.ui.view">
        <field name="name">stock.inventory.approval.matrix.tree</field>
        <field name="model">stock.inventory.approval.matrix</field>
        <field name="arch" type="xml">
            <tree string="Stock Inventory Approval Matrix" >
                <field name ="name"/>
                <field name="company_id" optional="hide"/>
                <field name="branch_id" optional="hide"/>
                <field name="warehouse_id" />
                <field name="approval_line_count"/>
            </tree>
        </field>
    </record>

    <record id="action_approval_matrix_stock_inventory" model="ir.actions.act_window">
        <field name="name">Stock Count Approval Matrix</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.inventory.approval.matrix</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem
        id="approval_matrix_stock_count_menu"
        name="Stock Count Approval Matrix"
        parent="approval_matrix_material_configuration_menu"
        action="action_approval_matrix_stock_inventory"
        sequence="1"/>
    

</odoo>
