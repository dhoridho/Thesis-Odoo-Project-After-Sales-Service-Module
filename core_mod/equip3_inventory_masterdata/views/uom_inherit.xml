<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- uom.category inherit tree view -->
    <record id="product_uom_categ_tree_view_inherit" model="ir.ui.view">
        <field name="name">uom.category.inherit.view.tree.inherit</field>
        <field name="model">uom.category</field>
        <field name="inherit_id" ref="uom.product_uom_categ_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="editable">top</attribute>
            </xpath>
        </field>
    </record>

    <!-- uom.uom inherit form view -->
    <record id="product_uom_form_view_inherit" model="ir.ui.view">
        <field name="name">uom.uom.inherit.view.form</field>
        <field name="model">uom.uom</field>
        <field name="inherit_id" ref="uom.product_uom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="attributes">
                <attribute name="js_class">uom_form_view</attribute>
            </xpath>
            <xpath expr="//div[2]" position="after">
                <field name="is_custom_uom" attrs="{'invisible':[('uom_type', '=', 'reference')]}" widget="uom_boolean_toggle"/>
            </xpath>
            <xpath expr="//sheet" position="inside">
                <notebook>
                    <page name="ratio_lines" string="Ratio Lines" attrs="{'invisible':['|',('is_custom_uom', '=', False), ('uom_type', '=', 'reference')]}">
                        <field name="product_ratio_line" context="{'default_uom_id': active_id}">
                            <tree editable="bottom">
                                <field name="uom_id" invisible="1"/>
                                <field name="product_tmpl_id" domain="[('uom_categ_id', '=', parent.category_id)]"/>
                                <field name="product_id"/>
                                <field name="product_variant_ids" invisible="1"/>
                                <field name="description"/>
                                <field name="ratio" required="1"/>
                                <field name="uom_ref_id"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>


    <record id="uom.product_uom_form_action" model="ir.actions.act_window">
        <field name="context">{'search_default_group_by_category': 1}</field>
    </record>
</odoo>