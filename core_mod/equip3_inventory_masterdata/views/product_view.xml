<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_bundle_product_kanban_view" model="ir.ui.view">
        <field name="name">product.product.pack</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="dynamic_product_bundle.product_bundle_product_kanban_view" />
        <field name="arch" type="xml">
            <xpath expr="//templates" position="replace">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click"> <!--Add this line for global click on kanban view-->
                            <div class="oe_kanban_vignette oe_semantic_html_override">
                                <a type="open">
                                    <img t-att-src="kanban_image('product.template', 'image_128', record.id.raw_value)" alt="Product" class="oe_kanban_image"/>
                                </a>
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open">
                                            <field name="name"/>
                                        </a>
                                    </h4>
                                    <div name="tags"/>
                                    <ul>
                                        <li>Price: <field name="lst_price"></field>
                                        </li>
                                    </ul>

                                    <ul>
                                        <li t-if="record.type.raw_value == 'product'">On hand: <field name="qty_available"/>
                                        <field name="uom_id"/>
                                    </li>
                                </ul>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </xpath>
        </field>
    </record>
</odoo>
