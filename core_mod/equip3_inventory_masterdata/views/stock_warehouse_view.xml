<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="inventory_masterdata_view_warehouse_form" model="ir.ui.view">
        <field name="name">inventory.masterdata.view.warehouse.form</field>
        <field name="model">stock.warehouse</field>
        <field name="inherit_id" ref="stock.view_warehouse"/>
        <field name="priority">17</field>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_all_routes']" position="attributes">
                <attribute name="icon">o-hm-smart-crm-route</attribute>
            </xpath>
            <xpath expr="//button[@name='action_open_stock_locations']" position="attributes">
                <attribute name="icon">o-hm-smart-all-location</attribute>
            </xpath>
            <xpath expr="//field[@name='company_id']" position="replace"></xpath>
            <xpath expr="//field[@name='branch_id']" position="before">
                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
            </xpath>
            <xpath expr="//field[@name='code']" position="replace">
                <field name="responsible_users" widget="many2many_tags"/>
            </xpath>
            <xpath expr="//group" position="before">
                <group>
                    <group>
                        <field name="code"/>
                    </group>
                </group>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="replace">
                <label for="street" string="Address"/>
                <div class="o_address_format">
                    <field name="street" placeholder="Street..." class="o_address_street"/>
                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                    <field name="city" placeholder="City" class="o_address_city"/>
                    <field name="state_id" class="o_address_state" placeholder="State" options="{&quot;no_open&quot;: True}"/>
                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                    <field name="country_id" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True}"/>
                </div>
                <field name="phone" widget="phone"/>
            </xpath>
            <xpath expr="//sheet" position="after">
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                </div>
            </xpath>
            <xpath expr="//field[@name='lot_stock_id']" position="after">
                <field name="lot_expired_id" />
            </xpath>
        </field>
    </record>

    <record id="inventory_masterdata_view_warehouse_tree" model="ir.ui.view">
        <field name="name">inventory.masterdata.view.warehouse.tree</field>
        <field name="model">stock.warehouse</field>
        <field name="inherit_id" ref="stock.view_warehouse_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="replace">
                <field name="branch_id"/>
            </xpath>
        </field>
    </record>

    <record id="inventory_masterdata_view_warehouse_inherit" model="ir.ui.view">
        <field name="name">inventory.masterdata.view.warehouse.tree</field>
        <field name="model">stock.warehouse</field>
        <field name="inherit_id" ref="stock_3dbase.view_warehouse_loc"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='spacex']" position="replace"/>
            <xpath expr="//field[@name='spacey']" position="replace"/>
            <xpath expr="//field[@name='spacez']" position="replace"/>
            <xpath expr="//field[@name='planimetry_image']" position="replace"/>
            <xpath expr="//group/group[2]" position="after">
                <group string="Warehouse Dimension" groups="equip3_inventory_accessright_setting.group_is_three_dimension_warehouse">
                    <group>
                        <field name="spacex"/>
                        <field name="spacey"/>
                        <field name="spacez"/>
                    </group>
                    <group>
                        <field name="planimetry_image" widget="image" help="Images must be uploaded if you want to set 3D Warehouse Overview"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <menuitem name="3d Warehouse overview" id="equip3_inventory_masterdata.3d_warehouse_overview" parent="stock.menu_warehouse_config" action="stock_3dbase.act_warehouse_stock_locations"/>


</odoo>
