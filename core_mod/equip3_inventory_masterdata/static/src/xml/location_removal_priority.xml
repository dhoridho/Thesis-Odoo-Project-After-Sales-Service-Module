<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
	<t t-name="equip3_inventory_masterdata.location_removal_priority_dashboard_header">
		<div class="o_location_removal_priority_container">
			<table class="o_location_removal_priority_table">
				<tbody>
					<tr>
						<td class="o_td_removal_priority_label">
							<label class="o_form_removal_priority_label">Warehouse</label>
						</td>
						<td style="width: 100%;">
							<select class="o_removal_priority_warehouse_input" name="removal_priority_dashboard_warehouse_id">
								<t t-foreach="values['warehouses']" t-as="warehouse_id">
									<t t-if="warehouse_id == values['warehouse_id']">
										<option t-att-value="warehouse_id" selected="True">
											<t t-esc="warehouse_id_value"/>
										</option>
									</t>
									<t t-else="">
										<option t-att-value="warehouse_id">
											<t t-esc="warehouse_id_value"/>
										</option>
									</t>
								</t>
							</select>
						</td>
						<td></td>
					</tr>
					<tr>
						<td class="o_td_removal_priority_label">
							<label class="o_form_removal_priority_label">Location</label>
						</td>
						<td style="width: 100%;">
							<select class="o_removal_priority_location_input" name="removal_priority_dashboard_location_id">
								<t t-foreach="values['locations']" t-as="location_id">
									<t t-if="location_id == values['location_id']">
										<option t-att-value="location_id" selected="True">
											<t t-esc="location_id_value"/>
										</option>
									</t>
									<t t-else="">
										<option t-att-value="location_id">
											<t t-esc="location_id_value"/>
										</option>
									</t>
								</t>
							</select>
						</td>
						<td>
							<button class="btn btn-primary reset_removal_priority_btn">Reset</button>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</t>
</templates>