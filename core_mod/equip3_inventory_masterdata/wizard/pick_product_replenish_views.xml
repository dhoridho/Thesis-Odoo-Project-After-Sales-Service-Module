<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pick_product_replenish" model="ir.ui.view">
        <field name="name">Pick Product To Replenish</field>
        <field name="model">pick.product.replenish</field>
        <field name="arch" type="xml">
            <form string="Pick Product To Replenish">
                <p>Please pick the product to replenish!</p>
                <sheet>
                    <group>
                        <field name="product_id" attrs="{'invisible': [('product_id', '=', False)]}"/>
                        <field name="product_tmpl_id" attrs="{'invisible': [('product_tmpl_id', '=', False)]}"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_confirm"
                        string="Confirm"
                        type="object"
                        class="btn-primary"/>
                    <button string="Discard"
                        class="btn-secondary"
                        special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
