<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_create_variant_form" model="ir.ui.view">
        <field name="name">product.template.create.variant</field>
        <field name="model">product.template.create.variant</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="variant_ids" widget="one2many" context="{'show_attribute': False}" nolabel="1">
                        <tree string="Variants" editable="bottom">
                            <field name="attribute_id" attrs="{'readonly': [('id', '!=', False)]}"/>
                            <field name="value_ids" widget="many2many_tags" options="{'no_create_edit': True}" context="{'default_attribute_id': attribute_id, 'show_attribute': False}" domain="[('id', 'not in', filter_value_ids), ('attribute_id', '=', attribute_id)]" required="1"/>
                            <field name='filter_value_ids' widget="many2many_tags" invisible="1"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="create_variants" string="Create Variants"
                        type="object" class="oe_highlight" />
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
       </field>
    </record>
</odoo>
