<odoo>
    <record id="product_rel_com_show" model="ir.rule">
        <field name="name">Matching Product Company rule</field>
        <field name="model_id" ref="model_product_template"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|', ('multi_companies_all', '=', False),('multi_companies_all' , 'in', [user.company_id.id] )]</field>
    </record>
</odoo>