<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_res_partner_form_inherit_is_customer" model="ir.ui.view">
        <field name="name">Res Partner Is Customer</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="before">
                <field name="is_customer"/>
            </xpath>
        </field>
    </record>

    <record id="server_action_change_user_home_action" model="ir.actions.server">
        <field name="name">Change User Home</field>
        <field name="model_id" ref="base.model_res_users"/>
        <field name="binding_model_id" ref="base.model_res_users"/>
        <field name="state">code</field>
        <field name="code">
            action = records.action_change_home_action()
        </field>
        <field name="binding_type">action</field>
        <field name="usage">ir_actions_server</field>
    </record>


</odoo>
