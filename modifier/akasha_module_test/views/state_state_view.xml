<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_state_state_tree" model="ir.ui.view">
        <field name="name">state.state.tree</field>
        <field name="model">state.state</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="sequence"/>
            </tree>
        </field>
    </record>

    <record id="view_state_state_form" model="ir.ui.view">
        <field name="name">state.state.form</field>
        <field name="model">state.state</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Main Models">
                            <field name="main_model_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_state_state" model="ir.actions.act_window">
        <field name="name">State State</field>
        <field name="res_model">state.state</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="state_state_menu"
              name="State State"
              parent="akasha_module_test.main_model_menu_root"
              action="action_state_state"/>

</odoo>
