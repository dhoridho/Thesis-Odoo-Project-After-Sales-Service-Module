<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_main_model_tree" model="ir.ui.view">
        <field name="name">main.model.tree</field>
        <field name="model">main.model</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="state_id" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="view_main_model_form" model="ir.ui.view">
        <field name="name">main.model.form</field>
        <field name="model">main.model</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="open_main_wizard"
                            type="object"
                            string="Change Sequence"
                            class="oe_highlight"/>
                    <field name="state_id" widget="statusbar" />
                </header>
                <sheet>


                    <field name="name" string="Name"/>

                </sheet>
            </form>
        </field>
    </record>

    <record id="action_main_model" model="ir.actions.act_window">
        <field name="name">Main Model</field>
        <field name="res_model">main.model</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="main_model_menu_root"
            name="Main Menu AWI"/>

    <menuitem id="main_model_menu"
              name="Main Model"
              parent="akasha_module_test.main_model_menu_root"
              action="action_main_model"/>

</odoo>
