<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_lot_serialize_views_inherit_equip3_inventory_operation" model="ir.ui.view">
        <field name="name">stock.lot.serialize.form.inherit</field>
        <field name="model">stock.lot.serialize</field>
        <field name="inherit_id" ref="equip3_inventory_operation.stock_lot_serialize_views"/>
        <field name="arch" type="xml">
            <field name="stock_move_line_ids" position="before">
                <field name="picking_batch_id" invisible="1"/>
                <field name="is_picking_batch"  invisible="1"/>
                <field name="stock_batch_move_line_ids" force_save="1" attrs="{'invisible': [('is_picking_batch', '=', False)]}">
                    <tree editable="bottom" create="0" delete="0">
                        <field name="sequence" readonly="1" force_save="1"/>
                        <field name="product_id" readonly="1" force_save="1"/>
                        <field name="demand_qty" readonly="1" force_save="1"/>
                        <field name="qty_per_lot"/>
                        <field name="stock_move_batch_id" invisible="1"/>
                    </tree>
                </field>
            </field>
            <field name="stock_move_line_ids" position="attributes">
                <attribute name="attrs">{'invisible': [('is_picking_batch', '=', True)]}</attribute>
            </field>
            <xpath expr="//footer/button[@name='confirm_by_lots']" position="before">
                <button name="confirm_batch_by_lots" type="object" string="Confirm Batch" class="btn btn-primary"
                attrs="{'invisible': [('is_picking_batch', '=', False)]}"/>
            </xpath>
            <xpath expr="//footer/button[@name='confirm_by_lots']" position="attributes">
                <attribute name="attrs">{'invisible': [('is_picking_batch', '=', True)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
