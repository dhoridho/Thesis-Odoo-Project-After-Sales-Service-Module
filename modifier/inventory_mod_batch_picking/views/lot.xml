<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_production_lot_form2">
            <field name="name">view_production_lot_form2</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="no_container" readonly="1" />
                    <field name="qc_date" readonly="1"
                        attrs="{'invisible':[('qc_date', '=', False)]}" />
                    <field name="pack_grade" />
                    <field name="stock_owner_id" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>