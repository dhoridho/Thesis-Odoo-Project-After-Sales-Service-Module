<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="set_open_wizard" model="ir.ui.view">
            <field name="name">Confirm DPL Quantity</field>
            <field name="model">confirm.dpl.qty</field>
            <field name="arch" type="xml">
                <form>
                    <div>
                        <p style="text-align: center;">
                            <h2 style="color:red; font-weight: bold;" class="text-center">WARNING !</h2>
                            <p>there are operations that have different DPL quantity and done quantity :</p>
                        </p>
                    </div>
                    <group >
                        <group>
                            <field name="bacth_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Operations">
                            <field name="move_ids" readonly="1">
                                <tree string="Operation">
                                    <field name="product_id" readonly="1"/>
                                    <field name="dpl_quantity" readonly="1"/>
                                    <field name="quantity_done" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <div>
                    <h3>
                        select the process button to continue validation or select the cancel button
                    </h3>
                    </div>
                    <footer>
                        <button name="process" string="Process" type="object" class="oe_highlight" confirm="Are you sure you want to do this?"/>
            or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="confir_dpl_qty" model="ir.actions.act_window">
            <field name="name">Confirm DPL Quantity</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">confirm.dpl.qty</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="jmk_mod_batch_picking.set_open_wizard"/>
            <field name="target">new</field>
        </record>



    </data>
</odoo>



