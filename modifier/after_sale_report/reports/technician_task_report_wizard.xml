<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_technician_task_report_wizard_form" model="ir.ui.view">
        <field name="name">technician.task.report.wizard.form</field>
        <field name="model">technician.task.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Technician Task Report">
                <sheet>
                    <div class="alert alert-info" role="alert">
                        This report provides details about technician tasks, repairs performed, and efficiency metrics.
                    </div>
                    <group>
                        <group>
                            <field name="start_date" required="1"/>
                            <field name="end_date" required="1"/>
                        </group>
                        <group>
                            <field name="all_technicians"/>
                            <field name="technician_id" attrs="{'invisible': [('all_technicians', '=', True)], 'required': [('all_technicians', '=', False)]}"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Generate Report" name="print_report" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_technician_task_report_wizard" model="ir.actions.act_window">
        <field name="name">Technician Task Report</field>
        <field name="res_model">technician.task.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record id="action_technician_task_pdf" model="ir.actions.report">
        <field name="name">Technician Task Report</field>
        <field name="model">technician.task.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">after_sale_report.report_technician_task_template</field>
        <field name="report_file">after_sale_report.report_technician_task_template</field>
        <field name="binding_model_id" ref="model_technician_task_report_wizard"/>
        <field name="binding_type">report</field>
    </record>
</odoo>