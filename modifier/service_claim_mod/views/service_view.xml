<?xml version="1.0" encoding="UTF-8"?>
<odoo>


    <record id="view_service_tree" model="ir.ui.view">
        <field name="name">service.claim.tree</field>
        <field name="model">service.claim</field>
        <field name="arch" type="xml">
            <tree string="Service Claims">
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="repair_request_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_service_form" model="ir.ui.view">
        <field name="name">service.claim.form</field>
        <field name="model">service.claim</field>
        <field name="arch" type="xml">
            <form string="Service Claim">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,done"/>
                </header>
                <sheet>
                    <group>
                        <field name="lot_id"/>
                        <field name="partner_id"/>
                        <field name="product_id"/>
                        <field name="sale_order_id" readonly="1"/>
                        <field name="repair_request_date"/>
                    </group>
                    <group>
                        <field name="repair_description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_service_claim" model="ir.actions.act_window">
        <field name="name">Service Claim</field>
        <field name="res_model">service.claim</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="menu_inventory_service"
            name="Service"
            parent="stock.menu_stock_root"
            action="action_service_claim"
            sequence="10"/>
</odoo>
