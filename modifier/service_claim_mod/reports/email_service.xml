<odoo>
    <record id="email_template_service_done" model="mail.template">
        <field name="name">Service Completion Notification</field>
        <field name="model_id" ref="service_claim_mod.model_service_claim"/>
        <field name="subject">Your Service is Complete</field>
        <field name="email_from">${object.company_id.email or ''}</field>
        <field name="email_to">${object.partner_id.email|safe}</field>
        <field name="body_html">
            <![CDATA[
            <p>Dear ${object.partner_id.name},</p>
            <p>We are pleased to inform you that the service for your part has been completed.</p>
            <p>Thank you for your patience.</p>
            ]]>
        </field>
    </record>
</odoo>
