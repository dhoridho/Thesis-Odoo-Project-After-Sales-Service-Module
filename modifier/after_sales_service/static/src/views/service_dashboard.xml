<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-name="service_dashboard_template">
        <div class="o_service_dashboard">
             <div class="dashboard-header">
                <h1>Service Management Dashboard</h1>
            </div>

            <div class="dashboard-content">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card service-request-card">
                            <div class="card-header">Service Requests</div>
                            <div class="card-body">
                                <t t-foreach="dashboard_data.serviceRequests" t-as="request">
                                    <h3><t t-esc="request.total_requests"/></h3>
                                    <p>In Progress: <t t-esc="request.in_progress"/></p>
                                    <p>Completed: <t t-esc="request.completed"/></p>
                                </t>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div>
                            <div class="card-header">Warranty Claims</div>
                            <div class="card-body">
                               <h1>HI2</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>