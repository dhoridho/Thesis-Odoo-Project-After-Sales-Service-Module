<!-- views/warranty_claim_cancel_wizard_views.xml -->
<odoo>
    <data>
        <!-- Cancel Wizard Form View -->
        <record id="view_warranty_claim_cancel_wizard_form" model="ir.ui.view">
            <field name="name">warranty.claim.cancel.wizard.form</field>
            <field name="model">warranty.claim.cancel.wizard</field>
            <field name="arch" type="xml">
                <form string="Cancel Warranty Claim">
                    <div class="alert alert-warning" role="alert">
                        <strong>Warning:</strong> This action will cancel the warranty claim. Please provide a reason for cancellation.
                    </div>

                    <group>
                        <group>
                            <field name="warranty_claim_id" readonly="1"/>
                            <field name="cancel_reason"/>
                        </group>
                        <group>
                            <field name="notify_customer"/>
                        </group>
                    </group>

                    <group>
                        <field name="cancel_notes"
                               placeholder="Please provide additional details about the cancellation and any specific warranty conditions..." attrs="{'required': [('cancel_reason', 'in', ['other'])]}" />
                    </group>


                    <footer>
                        <button name="action_confirm_cancel"
                                string="Confirm Cancellation"
                                type="object"
                                class="btn-primary"/>
                        <button string="Cancel"
                                class="btn-secondary"
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action for Cancel Wizard -->
        <record id="action_warranty_claim_cancel_wizard" model="ir.actions.act_window">
            <field name="name">Cancel Warranty Claim</field>
            <field name="res_model">warranty.claim.cancel.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="model_warranty_claim"/>
        </record>
    </data>
</odoo>