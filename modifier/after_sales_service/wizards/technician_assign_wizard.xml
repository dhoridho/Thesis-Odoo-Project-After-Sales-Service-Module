<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_technician_assign_wizard_simple" model="ir.ui.view">
        <field name="name">technician.assign.wizard.form.simple</field>
        <field name="model">technician.assign.wizard</field>
        <field name="arch" type="xml">
            <form string="Assign Technician">
                <sheet>

                    <field name="technician_line_ids" nolabel="1">
                        <tree string="Available Technicians"
                              create="false"
                              delete="false"
                              options="{'no_open': True}"
                              editable="false">
                            <field name="name" readonly="1"/>
                            <field name="job_title" readonly="1"/>
                            <field name="ongoing_tasks" readonly="1"/>
<!--                            <button name="action_select_technician"-->
<!--                                    type="object"-->
<!--                                    string="Select"-->
<!--                                    class="btn-primary"/>-->
                        </tree>
                    </field>

                    <separator string="Technician Workload Information"/>

                    <group>
                        <field name="selected_technician_id"
                               domain="[('job_title', 'in', ['Technician', 'Technician Manager'])]"
                               options="{'no_create': True, 'no_create_edit': True}"
                               required="1"/>
                    </group>



                </sheet>
                <footer>
                    <button name="action_assign"
                            type="object"
                            string="Assign Technician"
                            class="oe_highlight"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>