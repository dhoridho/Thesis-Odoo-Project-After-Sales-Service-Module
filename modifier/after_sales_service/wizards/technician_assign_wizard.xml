<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_technician_assign_wizard_simple" model="ir.ui.view">
        <field name="name">technician.assign.wizard.form.simple</field>
        <field name="model">technician.assign.wizard</field>
        <field name="arch" type="xml">
            <form string="Assign Technician">
                <sheet>
                    <group>
                        <field name="selected_technician_id"
                               domain="[('job_title', 'in', ['Technician', 'Technician Manager'])]"
                               options="{'no_create': True, 'no_create_edit': True}"
                               required="1"/>
                    </group>

                    <separator string="Technician Workload Information"/>
                    <field name="technician_line_ids" nolabel="1" readonly="1">
                        <tree string="Available Technicians" create="false" delete="false" editable="false">
                            <field name="name"/>
                            <field name="job_title"/>
                            <field name="ongoing_tasks"/>
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button name="action_assign"
                            type="object"
                            string="Assign Technician"
                            class="oe_highlight"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>