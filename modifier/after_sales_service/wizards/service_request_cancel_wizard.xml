<!-- views/service_request_cancel_wizard_views.xml -->
<odoo>
    <data>
        <!-- Cancel Wizard Form View -->
        <record id="view_service_request_cancel_wizard_form" model="ir.ui.view">
            <field name="name">service.request.cancel.wizard.form</field>
            <field name="model">service.request.cancel.wizard</field>
            <field name="arch" type="xml">
                <form string="Cancel Service Request">
                    <div class="alert alert-warning" role="alert">
                        <strong>Warning:</strong> This action will cancel the service request. Please provide a reason for cancellation.
                    </div>

                    <group>
                        <group>
                            <field name="service_request_id" readonly="1"/>
                            <field name="cancel_reason"/>
                        </group>
                        <group>
                            <field name="notify_customer"/>
                        </group>
                    </group>

                    <group>
                        <field name="cancel_notes" placeholder="Please provide additional details about the cancellation..." attrs="{'required': [('cancel_reason', 'in', ['other'])]}"/>
                    </group>

                    <footer>
                        <button name="action_confirm_cancel"
                                string="Confirm Cancellation"
                                type="object"
                                class="btn-primary"/>
                        <button string="Cancel"
                                class="btn-secondary"
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action for Cancel Wizard -->
        <record id="action_service_request_cancel_wizard" model="ir.actions.act_window">
            <field name="name">Cancel Service Request</field>
            <field name="res_model">service.request.cancel.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="model_service_request"/>
        </record>
    </data>
</odoo>