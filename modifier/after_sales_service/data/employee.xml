<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    <data noupdate="1">-->
    <record id="department_customer_service" model="hr.department">
        <field name="name">Customer Service</field>
    </record>

    <record id="department_technical" model="hr.department">
        <field name="name">Technical</field>
    </record>

    <record id="job_customer_service_manager" model="hr.job">
        <field name="name">Customer Service Manager</field>
        <field name="department_id" ref="department_customer_service"/>
    </record>

    <record id="job_technician_manager" model="hr.job">
        <field name="name">Technician Manager</field>
        <field name="department_id" ref="department_technical"/>
    </record>

    <!-- Customer Service Manager -->
    <record id="user_customer_service_manager" model="res.users">
        <field name="name">Customer Service Manager</field>
        <field name="login">csmanager</field>
        <field name="email">cs_manager@email.com</field>
        <field name="password">123</field>
        <field name="groups_id" eval="[
                (4, ref('base.group_user')),
                (4, ref('after_sales_service.group_after_sales_team')),
                (4, ref('after_sales_service.group_customer_service_manager')),
                (4, ref('sales_team.group_sale_salesman_all_leads'))
            ]"/>
    </record>

    <!-- Technician Manager -->
    <record id="user_technician_manager" model="res.users">
        <field name="name">Technician Manager</field>
        <field name="login">techmanager</field>
        <field name="email">tech_manager@email.com</field>
        <field name="password">123</field>
        <field name="groups_id" eval="[
                (4, ref('base.group_user')),
                (4, ref('after_sales_service.group_after_sales_team')),
                (4, ref('after_sales_service.group_technician_manager')),
                (4, ref('sales_team.group_sale_salesman_all_leads'))
            ]"/>
    </record>


    <!-- Employees -->
    <record id="employee_customer_service_manager" model="hr.employee">
        <field name="name">Customer Service Manager</field>
        <field name="work_email">cs_manager@example.com</field>
        <field name="department_id" ref="department_customer_service"/>
        <field name="job_id" ref="job_customer_service_manager"/>
        <field name="job_title">Customer Service Manager</field>
        <field name="work_phone">+123</field>
        <field name="mobile_phone">+123</field>
        <field name="user_id" ref="user_customer_service_manager"/>
    </record>

    <record id="employee_technician_manager" model="hr.employee">
        <field name="name">Technician Manager</field>
        <field name="work_email">tech_manager@example.com</field>
        <field name="department_id" ref="department_technical"/>
        <field name="job_id" ref="job_technician_manager"/>
        <field name="job_title">Technician Manager</field>
        <field name="work_phone">+123</field>
        <field name="mobile_phone">+123</field>
        <field name="user_id" ref="user_technician_manager"/>
    </record>


</odoo>