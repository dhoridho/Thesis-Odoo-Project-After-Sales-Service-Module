<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_warranty_claim_tree" model="ir.ui.view">
        <field name="name">warranty.claim.tree</field>
        <field name="model">warranty.claim</field>
        <field name="arch" type="xml">
            <tree string="Warranty Claims" default_order="id desc">
                <field name="name"/>
                <field name="sale_order_id"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="claim_date"/>
                <field name="warranty_expiry_date"/>
                <field name="technician_id"/>
                <field name="responsible_id"/>
                <field name="state" widget="badge"
                       decoration-danger="state=='cancelled'"
                       decoration-success="state=='completed'"
                       decoration-info="state=='in_progress'"/>
            </tree>
        </field>
    </record>


    <record id="view_warranty_claim_tree_technician" model="ir.ui.view">
        <field name="name">warranty.claim.tree.technician</field>
        <field name="model">warranty.claim</field>
        <field name="arch" type="xml">
            <tree string="Warranty Claims" default_order="id desc" create="false">
                <field name="name"/>
                <field name="sale_order_id"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="claim_date"/>
                <field name="warranty_expiry_date"/>
                <field name="technician_id"/>
                <field name="responsible_id"/>
                <field name="state" widget="badge"
                       decoration-danger="state=='cancelled'"
                       decoration-success="state=='completed'"
                       decoration-info="state=='in_progress'"/>
            </tree>
        </field>
    </record>

    <record id="view_warranty_claim_form" model="ir.ui.view">
        <field name="name">warranty.claim.form</field>
        <field name="model">warranty.claim</field>
        <field name="arch" type="xml">
            <form string="Warranty Claim">
                <header>

                    <button name="open_assign_technician_wizard"
                            type="object"
                            string="Assign Technician"
                            class="oe_highlight"
                            attrs="{'invisible': [('state', 'not in', ['draft', 'assign_technician'])]}"/>

                    <button name="action_submit_order"
                            type="object"
                            string="Submit Order"
                            class="oe_highlight"
                            attrs="{'invisible': ['|', ('state', 'not in', ['draft','assign_technician']), ('technician_id', '=', False)]}"/>

                    <button name="action_cancel"
                            type="object"
                            string="Cancel"
                            class="btn btn-danger"
                            attrs="{'invisible': [('state', 'not in', ['assign_technician'])]}" />

                    <button name="action_reset_to_draft"
                            type="object"
                            string="Reset to Draft"
                            class="btn btn-secondary"
                            attrs="{'invisible': [('state', 'not in', ['cancelled'])]}" />

                    <field name="state" widget="statusbar" statusbar_visible="draft,assign_technician,submitted,in_progress,completed" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_repair_history"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-wrench">
                            <field name="repair_count" widget="statinfo" string="Repair History"/>
                        </button>
                    </div>
                    <h1><field name="name"/></h1>
                    <group>
                        <group>
                            <field name="partner_id" domain="[('is_customer', '=', True)]" options="{'no_create': True}"/>
                            <field name="sale_order_id" domain="[('partner_id', '=', partner_id)]" options="{'no_create': True}"/>
                            <field name="product_id" domain="[('id', 'in', valid_product_ids)]" options="{'no_create': True}"/>
                            <field name="valid_product_ids" invisible="1"/>
                            <field name="claim_date"/>
                            <field name="warranty_expiry_date"/>
                        </group>
                        <group>
                            <field name="technician_id" readonly="1" domain="[('job_title', 'in', ['Technician', 'Technician Manager'])]" options="{'no_create': True}"/>
                            <field name="is_in_warranty" invisible="1"/>
                            <field name="resolution_type"/>
                            <field name="resolution_date" attrs="{'invisible': [('resolution_type', '=', 'False')]}"/>
                            <field name="replacement_product_id" attrs="{'invisible': [('resolution_type', '!=', 'replace')]}"/>
                            <field name="is_by_portal" invisible="1"/>
                            <field name="responsible_id" string="Responsible CS" readonly="1" attrs="{'invisible': [('is_by_portal', '=', True)]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
                 <div class="oe_chatter">
                     <field name="message_follower_ids"/>
                     <field name="message_ids"/>
                 </div>
            </form>
        </field>
    </record>

    <record id="view_warranty_claim_search" model="ir.ui.view">
        <field name="name">warranty.claim.search</field>
        <field name="model">warranty.claim</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="state"/>
                <field name="responsible_id"/>

                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Assign Technician" name="pending" domain="[('state', '=', 'assign_technician')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>

                <separator/>
                <filter name="own_document"
                        string="Own Documents"
                        domain="[('responsible_id', '=', uid)]"/>

                <separator/>

                <group>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Technician" name="group_technician" context="{'group_by': 'technician_id'}"/>
                    <filter string="Resolution Type" name="group_service_type" context="{'group_by': 'resolution_type'}"/>
<!--                    <filter string="Portal" name="group_by_portal" context="{'group_by': 'portal_type'}"/>-->
                </group>
            </search>
        </field>
    </record>


     <!-- Original server action for all warranty claims -->
    <record model="ir.actions.server" id="action_warranty_claim">
        <field name="name">Warranty Claims</field>
        <field name="model_id" ref="after_sales_service.model_warranty_claim"/>
        <field name="state">code</field>
        <field name="code">
            action = model.sudo().by_domain_warranty_claim()
        </field>
    </record>

    <!-- NEW: Server action for internal warranty claims -->
    <record model="ir.actions.server" id="action_internal_warranty_claim_server">
        <field name="name">Internal Warranty Claims</field>
        <field name="model_id" ref="after_sales_service.model_warranty_claim"/>
        <field name="state">code</field>
        <field name="code">
action = model.sudo().by_domain_warranty_claim()
action['domain'] = action.get('domain', []) + [('portal_type', '=', 'internal')]
action['name'] = 'Internal Warranty Claims'
        </field>
    </record>

    <!-- NEW: Server action for portal warranty claims -->
    <record model="ir.actions.server" id="action_portal_warranty_claim_server">
        <field name="name">Portal Warranty Claims</field>
        <field name="model_id" ref="after_sales_service.model_warranty_claim"/>
        <field name="state">code</field>
        <field name="code">
action = model.sudo().by_domain_warranty_claim()
action['domain'] = action.get('domain', []) + [('portal_type', '=', 'portal')]
action['name'] = 'Portal Warranty Claims'
action['context'] = {}
        </field>
    </record>

    <!-- UPDATED: Main menu item (now acts as parent for submenus) -->
    <menuitem
            id="menu_warranty_management"
            name="Warranty Management"
            parent="menu_after_sales_root"
            sequence="3"
            />

    <!-- NEW: Submenu for Internal Warranty Claims -->
    <menuitem
            id="menu_internal_warranty_claim"
            name="Internal Claims"
            parent="menu_warranty_management"
            action="action_internal_warranty_claim_server"
            sequence="1"
            />

    <!-- NEW: Submenu for Portal Warranty Claims -->
    <menuitem
            id="menu_portal_warranty_claim"
            name="Portal Claims"
            parent="menu_warranty_management"
            action="action_portal_warranty_claim_server"
            sequence="2"
            />

    <record id="email_template_claim_cancel" model="mail.template">
        <field name="name">Warranty Claim Cancelled</field>
        <field name="email_from">${(object.company_id.email or 'noreply@example.com')|safe}</field>
        <field name="email_to">${object.partner_id.email or ''}</field>
        <field name="subject">Warranty Claim ${object.name} Cancelled</field>
        <field name="model_id" ref="model_warranty_claim"/>
        <field name="body_html" type="html">
            <p>Dear ${object.partner_id.name},</p>

            <p>We would like to inform you that your warranty claim
            <strong>${object.name}</strong> has been <strong>cancelled</strong>.</p>

            <p><strong>Reason:</strong>
                ${dict(object.fields_get()['cancel_reason']['selection'])[object.cancel_reason]}
            </p>

            <div>
                % if object.cancel_notes:
                <p><strong>Additional Notes:</strong><br/>
                    ${object.cancel_notes}</p>
                % endif
            </div>


            <p>If this was unexpected, or you have any questions, please feel free to contact us.</p>

            <p>Thank you,<br/>
            ${object.company_id.name}</p>
        </field>
    </record>

    <record id="email_template_claim_reset" model="mail.template">
        <field name="name">Warranty Claim Reset</field>
        <field name="email_from">${(object.company_id.email or 'noreply@example.com')|safe}</field>
        <field name="email_to">${object.partner_id.email or ''}</field>
        <field name="subject">Warranty Claim ${object.name} Reset to Draft</field>
        <field name="model_id" ref="model_warranty_claim"/>
        <field name="body_html" type="html">
            <p>Dear ${object.partner_id.name},</p>
            <p>Your warranty claim <strong>${object.name}</strong> has been reset to draft for further updates or correction.</p>
            <p>Please feel free to edit and resubmit if needed.</p>
        </field>
    </record>

