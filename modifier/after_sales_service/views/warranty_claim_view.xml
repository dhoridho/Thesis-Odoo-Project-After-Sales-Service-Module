<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_warranty_claim_tree" model="ir.ui.view">
        <field name="name">warranty.claim.tree</field>
        <field name="model">warranty.claim</field>
        <field name="arch" type="xml">
            <tree string="Warranty Claims" default_order="id desc">
                <field name="name"/>
                <field name="sale_order_id"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="claim_date"/>
                <field name="warranty_expiry_date"/>
                <field name="technician_id"/>
                <field name="responsible_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>


    <record id="view_warranty_claim_tree_technician" model="ir.ui.view">
        <field name="name">warranty.claim.tree.technician</field>
        <field name="model">warranty.claim</field>
        <field name="arch" type="xml">
            <tree string="Warranty Claims" default_order="id desc" create="false">
                <field name="name"/>
                <field name="sale_order_id"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="claim_date"/>
                <field name="warranty_expiry_date"/>
                <field name="technician_id"/>
                <field name="responsible_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_warranty_claim_form" model="ir.ui.view">
        <field name="name">warranty.claim.form</field>
        <field name="model">warranty.claim</field>
        <field name="arch" type="xml">
            <form string="Warranty Claim">
                <header>
                    <button name="action_submit_order"
                            type="object"
                            string="Submit Order"
                            class="oe_highlight"
                            attrs="{'invisible': ['|', ('state', 'not in', ['draft','assign_technician']), ('technician_id', '=', False)]}"/>

                    <button name="open_assign_technician_wizard"
                            type="object"
                            string="Assign Technician"
                            class="oe_highlight"
                            attrs="{'invisible': [('state', '!=', 'assign_technician')]}"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,assign_technician,submitted,in_progress,completed" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_repair_history"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-wrench">
                            <field name="repair_count" widget="statinfo" string="Repair History"/>
                        </button>
                    </div>
                    <h1><field name="name"/></h1>
                    <group>
                        <group>
                            <field name="partner_id" domain="[('is_customer', '=', True)]" options="{'no_create': True}"/>
                            <field name="sale_order_id" domain="[('partner_id', '=', partner_id)]" options="{'no_create': True}"/>
                            <field name="product_id" domain="[('id', 'in', valid_product_ids)]" options="{'no_create': True}"/>
                            <field name="valid_product_ids" invisible="1"/>
                            <field name="claim_date"/>
                            <field name="warranty_expiry_date"/>
                        </group>
                        <group>
                            <field name="technician_id" attrs="{'required': [('state', '=', 'assign_technician')], 'readonly': [('state', 'not in', ['draft', 'assign_technician'])]}" domain="[('job_title', 'in', ['Technician', 'Technician Manager'])]" options="{'no_create': True}"/>
                            <field name="is_in_warranty" invisible="1"/>
                            <field name="resolution_type"/>
                            <field name="resolution_date" attrs="{'invisible': [('resolution_type', '=', 'False')]}"/>
                            <field name="replacement_product_id" attrs="{'invisible': [('resolution_type', '!=', 'replace')]}"/>
                            <field name="is_by_portal" invisible="1"/>
                            <field name="responsible_id" string="Responsible CS" readonly="1" attrs="{'invisible': [('is_by_portal', '=', True)]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
                 <div class="oe_chatter">
                     <field name="message_follower_ids"/>
                     <field name="message_ids"/>
                 </div>
            </form>
        </field>
    </record>

    <record id="view_warranty_claim_search" model="ir.ui.view">
        <field name="name">warranty.claim.search</field>
        <field name="model">warranty.claim</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="state"/>
                <field name="responsible_id"/>
                <separator/>
                <filter name="own_document"
                        string="Own Documents"
                        domain="[('responsible_id', '=', uid)]"/>
            </search>
        </field>
    </record>


    <record model="ir.actions.server" id="action_warranty_claim">
        <field name="name">Warranty Claims</field>
        <field name="model_id" ref="after_sales_service.model_warranty_claim"/>
        <field name="state">code</field>
        <field name="code">
            action = model.sudo().by_domain_warranty_claim()
        </field>
    </record>

    <menuitem
            id="menu_warranty_management"
            name="Warranty Management"
            parent="menu_after_sales_root"
            action="action_warranty_claim"
            sequence="3"
            />

