<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_repair_history_tree" model="ir.ui.view">
        <field name="name">repair.history.tree</field>
        <field name="model">repair.history</field>
        <field name="arch" type="xml">
            <tree string="Repair History" default_order="id desc" create="false">
                <field name="name"/>
                <field name="origin"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="technician_id"/>
                <field name="repair_date"/>
                <field name="state" widget="badge"
                       decoration-danger="state=='rejected'"
                       decoration-success="state=='completed'"
                       decoration-info="state=='in_progress'"/>
<!--                <field name="is_warranty_repair"/>-->
            </tree>
        </field>
    </record>

    <record id="view_repair_history_form" model="ir.ui.view">
        <field name="name">repair.history.form</field>
        <field name="model">repair.history</field>
        <field name="arch" type="xml">
            <form string="Repair History" create="false">
                <header>
                    <field name="has_group" invisible="1"/>
                    <button name="action_confirm"
                            type="object"
                            string="Process Repair"
                            class="btn-primary"
                            attrs="{'invisible': [('state', '!=', 'pending')]}"
                            groups="after_sales_service.group_technician"/>

                    <button name="action_complete"
                            type="object"
                            string="Complete"
                            class="btn-primary"
                            attrs="{'invisible': [('state', '!=', 'in_progress')]}"
                            groups="after_sales_service.group_technician"/>

                    <button name="action_reject" string="Reject" type="object"
                            attrs="{'invisible': [('state', 'not in', ['pending', 'in_progress'])]}"
                            class="btn-danger"
                            groups="after_sales_service.group_technician"/>

                    <button name="action_confirm_reject" string="Confirm Reject" type="object"
                            attrs="{'invisible': [('state', '!=', 'waiting_approval')]}"
                            class="btn-primary"
                            groups="after_sales_service.group_technician_manager"/>

                    <button name="action_reset_to_pending" string="Reset to Pending" type="object"
                            attrs="{'invisible': [('state', 'not in', ['waiting_approval', 'rejected'])]}"
                            groups="after_sales_service.group_technician_manager"/>
                     <field name="state" widget="statusbar" statusbar_visible="pending,in_progress,completed"/>
                </header>
                <sheet>
                    <h1><field name="name"/></h1>
                    <group>
                        <group>
                            <field name="partner_id" readonly="1"/>
                            <field name="product_id" readonly="1"/>
                            <field name="repair_date" readonly="1"/>
                            <field name="repair_type" attrs="{'readonly': [('state', 'in', ['completed', 'rejected'])]}"/>
                        </group>
                        <group>
                            <field name="technician_id" readonly="1"/>
                            <field name="is_warranty_repair" invisible="1"/>
                            <field name="origin"/>
                            <field name="completion_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>

                 <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

     <record id="view_repair_history_search" model="ir.ui.view">
        <field name="name">repair.history.search</field>
        <field name="model">repair.history</field>
        <field name="arch" type="xml">
            <search string="Search Repair History">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="technician_id"/>
                <field name="origin"/>

                <filter string="Pending" name="pending" domain="[('state', '=', 'pending')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                <filter string="Rejected" name="rejected" domain="[('state', '=', 'rejected')]"/>

                <separator/>
                <filter string="Warranty Repairs" name="warranty_repairs" domain="[('is_warranty_repair', '=', True)]"/>
                <filter string="Regular Repairs" name="regular_repairs" domain="[('is_warranty_repair', '=', False)]"/>

                <separator/>
                <filter string="My Repairs" name="my_repairs" domain="[('technician_id.user_id', '=', uid)]"/>

                <group expand="0" string="Group By">
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Technician" name="group_technician" context="{'group_by': 'technician_id'}"/>
                    <filter string="Customer" name="group_customer" context="{'group_by': 'partner_id'}"/>
                    <filter string="Repair Type" name="group_repair_type" context="{'group_by': 'repair_type'}"/>
                    <filter string="Repair Date" name="group_repair_date" context="{'group_by': 'repair_date'}"/>
                </group>
            </search>
        </field>
    </record>

