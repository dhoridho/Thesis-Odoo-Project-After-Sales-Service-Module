    <record model="ir.actions.server" id="action_repair_history_dynamic">
        <field name="name">Repairs &amp; Maintenance</field>
        <field name="model_id" ref="after_sales_service.model_repair_history"/>
        <field name="state">code</field>
        <field name="code">action = model.by_domain_repair_history()</field>
    </record>

    <menuitem
            id="menu_repair_history"
            name="Repairs &amp; Maintenance"
            parent="menu_after_sales_root"
            action="after_sales_service.action_repair_history_dynamic"
            sequence="4"
            groups="after_sales_service.group_technician"/>


     <record id="view_repair_reject_wizard_form" model="ir.ui.view">
        <field name="name">repair.reject.wizard.form</field>
        <field name="model">repair.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject Repair">
                <div class="alert alert-warning" role="alert">
                    <strong>Warning:</strong> This action will reject the repair request.
                    This action cannot be undone without manual intervention.
                </div>

                <group>
                    <group>
                        <field name="repair_history_id" readonly="1"/>
                        <field name="reject_date" readonly="1"/>
                        <field name="rejected_by" readonly="1"/>
                    </group>
                </group>

                <group>
                    <field name="reject_reason" placeholder="Please provide a detailed reason for rejecting this repair request..."
                           widget="text" options="{'no_open': True}" required="1"/>
                </group>

                <footer>
                    <button name="action_reject_repair" string="Reject Repair" type="object"
                            class="btn-danger" confirm="Are you sure you want to reject this repair request?"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="email_template_repair_complete" model="mail.template">
        <field name="name">Request Completed Notification</field>
        <field name="model_id" ref="model_repair_history"/>
        <field name="email_from">${(object.company_id.email or 'noreply@example.com')|safe}</field>
        <field name="email_to">${object.partner_id.email}</field>
        <field name="subject">Your Request ${object.origin} for ${object.product_id.name} is Completed</field>
        <field name="body_html" type="html">
            <p>Dear ${object.partner_id.name},</p>
            <p>We are pleased to inform you that the repair for your product <strong>${object.product_id.name}</strong> has been successfully completed.</p>
            <p><strong>Request Reference:</strong> ${object.origin}<br/>
               <strong>Completion Date:</strong> ${object.completion_date}</p>
            <p>If you have any further questions or need assistance, please feel free to contact us.</p>
            <p>Thank you,<br/>${object.company_id.name}</p>
        </field>
    </record>

    <!-- Action for Repair Reject Wizard -->
    <record id="action_repair_reject_wizard" model="ir.actions.act_window">
        <field name="name">Reject Repair</field>
        <field name="res_model">repair.reject.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>