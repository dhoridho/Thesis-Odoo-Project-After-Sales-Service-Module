<odoo>

    <record id="view_repair_history_tree" model="ir.ui.view">
        <field name="name">repair.history.tree</field>
        <field name="model">repair.history</field>
        <field name="arch" type="xml">
            <tree string="Repair History" default_order="id desc">
                <field name="name"/>
                <field name="origin"/>
                <field name="customer_id"/>
                <field name="product_id"/>
                <field name="technician_id"/>
                <field name="repair_date"/>
                <field name="state"/>
<!--                <field name="is_warranty_repair"/>-->
            </tree>
        </field>
    </record>

    <record id="view_repair_history_form" model="ir.ui.view">
        <field name="name">repair.history.form</field>
        <field name="model">repair.history</field>
        <field name="arch" type="xml">
            <form string="Repair History">
                <header>
                     <button name="action_confirm"
                        type="object"
                        string="Confirm"
                        class="btn-primary"
                        attrs="{'invisible': [('state', '!=', 'pending')]}"/>

                    <button name="action_complete"
                        type="object"
                        string="Complete"
                        class="btn-primary"
                        attrs="{'invisible': [('state', '!=', 'in_progress')]}"/>
                     <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <h1><field name="name"/></h1>
                    <group>
                        <group>
                            <field name="customer_id"/>
                            <field name="product_id"/>
                            <field name="repair_date"/>
                            <field name="repair_type" attrs="{'required': [('state', '=', 'pending')]}"/>
                        </group>
                        <group>
                            <field name="technician_id" readonly="1"/>
                            <field name="is_warranty_repair" invisible="1"/>
                            <field name="origin"/>

                            <field name="completion_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

     <record id="action_repair_history" model="ir.actions.act_window">
        <field name="name">Repairs &amp; Maintenance</field>
        <field name="res_model">repair.history</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="menu_repair_history"
            name="Repairs &amp; Maintenance"
            parent="menu_after_sales_root"
            action="action_repair_history"
            sequence="4"
            groups="after_sales_service.group_technician"/>
</odoo>