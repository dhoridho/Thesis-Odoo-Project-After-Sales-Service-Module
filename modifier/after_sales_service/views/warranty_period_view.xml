<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_warranty_tree" model="ir.ui.view">
        <field name="name">warranty.period.tree</field>
        <field name="model">warranty.period</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="duration"/>
            </tree>
        </field>
    </record>

    <record id="view_warranty_period_form" model="ir.ui.view">
        <field name="name">warranty.period.form</field>
        <field name="model">warranty.period</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="duration"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_warranty_period" model="ir.actions.act_window">
        <field name="name">Warranty Period</field>
        <field name="res_model">warranty.period</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="sale_menu_warranty_period"
              name="Warranty Period"
              parent="sale.product_menu_catalog"
              action="action_warranty_period"/>

