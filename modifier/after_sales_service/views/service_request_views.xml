<odoo>
    <record id="view_service_request_form" model="ir.ui.view">
        <field name="name">service.request.form</field>
        <field name="model">service.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_submit_order"
                            type="object"
                            string="Submit Order"
                            class="oe_highlight"
                            attrs="{'invisible': ['|', ('technician_id', '=', False), ('state', 'not in', ['draft', 'ready_assign'])]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <h1><field name="name"/></h1>
                    <group width="100%">
                        <group width="30%">
                            <field name="customer_id"/>
                            <field name="product_id"/>
                            <field name="request_date"/>
                            <field name="estimated_completion_date"/>
                        </group>
                        <group width="70%">
                            <field name="technician_id" attrs="{'required': [('state', '=', 'ready_assign')]}"/>
                            <field name="service_type"/>
                            <field name="actual_completion_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="view_service_request_tree" model="ir.ui.view">
        <field name="name">service.request.tree</field>
        <field name="model">service.request</field>
        <field name="arch" type="xml">
            <tree string="Service Request Tree" default_order="id" decoration-muted="state == 'completed'">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="product_id"/>
                <field name="service_type"/>
                <field name="technician_id"/>
                <field name="request_date"/>
                <field name="estimated_completion_date"/>
                <field name="actual_completion_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>


    <record id="action_service_request" model="ir.actions.act_window">
        <field name="name">Service Request</field>
        <field name="res_model">service.request</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="menu_service_request"
            name="Service Request"
            parent="menu_after_sales_root"
            action="action_service_request"
            sequence="2"/>
</odoo>