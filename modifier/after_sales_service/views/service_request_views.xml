<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_service_request_form" model="ir.ui.view">
        <field name="name">service.request.form</field>
        <field name="model">service.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_submit_order"
                            type="object"
                            string="Submit Order"
                            class="oe_highlight"
                            attrs="{'invisible': ['|', ('state', 'not in', ['draft','assign_technician']), ('technician_id', '=', False)]}"/>
<!--                            attrs="{'invisible': ['&amp;', ('technician_id', '=', False), ('state', 'not in', ['assign_technician']), ('state', 'in', ['in_progress', 'completed', 'cancel'])]}"/>-->
                    <button name="open_assign_technician_wizard"
                            type="object"
                            string="Assign Technician"
                            class="oe_highlight"
                            attrs="{'invisible': [('state', '!=', 'assign_technician')]}"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,assign_technician,submitted,in_progress,completed" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_repair_history"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-wrench">
                            <field name="repair_count" widget="statinfo" string="Repair History"/>
                        </button>
                    </div>
                    <h1><field name="name"/></h1>
                    <group width="100%">
                        <group width="30%">
                            <field name="partner_id" domain="[('is_customer', '=', True)]" options="{'no_create': True}"/>
                            <field name="product_id" options="{'no_create': True}"/>
                            <field name="request_date"/>
                            <field name="estimated_completion_date"/>
                        </group>
                        <group width="70%">
                            <field name="technician_id" readonly="1" domain="[('job_title', 'in', ['Technician', 'Technician Manager'])]" options="{'no_create': True}"/>
                            <field name="service_type"/>
                            <field name="actual_completion_date" readonly="1"/>
                            <field name="is_by_portal" invisible="1"/>
                            <field name="responsible_id" string="Responsible CS" readonly="1" attrs="{'invisible': [('is_by_portal', '=', True)]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_service_request_tree" model="ir.ui.view">
        <field name="name">service.request.tree</field>
        <field name="model">service.request</field>
        <field name="arch" type="xml">
            <tree string="Service Request Tree" default_order="id desc" decoration-muted="state == 'completed'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="service_type"/>
                <field name="technician_id"/>
                <field name="responsible_id"/>
                <field name="request_date"/>
                <field name="estimated_completion_date"/>
                <field name="actual_completion_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_service_request_tree_technician" model="ir.ui.view">
        <field name="name">service.request.tree</field>
        <field name="model">service.request</field>
        <field name="arch" type="xml">
            <tree string="Service Request Tree" default_order="id desc" decoration-muted="state == 'completed'" create="false">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="service_type"/>
                <field name="technician_id"/>
                <field name="responsible_id"/>
                <field name="request_date"/>
                <field name="estimated_completion_date"/>
                <field name="actual_completion_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_service_request_search" model="ir.ui.view">
        <field name="name">service.request.search</field>
        <field name="model">service.request</field>
        <field name="arch" type="xml">
            <search string="Search Service Requests">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="state"/>
                <field name="responsible_id"/>

                <separator/>

                <!-- âœ… Custom filter: Own Documents Service Requests -->
                <filter name="own_document"
                        string="Own Documents"
                        domain="[('responsible_id', '=', uid)]"/>

            </search>
        </field>
    </record>

    <record model="ir.actions.server" id="action_service_request_server">
        <field name="name">Service Request</field>
        <field name="model_id" ref="after_sales_service.model_service_request"/>
        <field name="state">code</field>
        <field name="code">
            action = model.sudo().by_domain_service_request()
        </field>
    </record>


    <menuitem
            id="menu_service_request"
            name="Service Request"
            parent="menu_after_sales_root"
            action="action_service_request_server"
            sequence="2"
            />

