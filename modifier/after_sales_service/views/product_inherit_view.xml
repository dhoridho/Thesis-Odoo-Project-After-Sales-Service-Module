<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_only_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.only.form.view.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']/div[2]" position="after">
                <div>
                    <field name="has_warranty"/>
                    <label for="has_warranty"/>
                </div>
            </xpath>

            <xpath expr="//field[@name='company_id']" position="before">
                <label for="warranty_period_id" groups="base.group_user" attrs="{'invisible': [('has_warranty', '!=', True)]}"/>
                <div name="warranty_period_id" groups="base.group_user" class="o_row" attrs="{'invisible': [('has_warranty', '!=', True)]}">
                    <field name="warranty_period_id" attrs="{'required': [('has_warranty', '=', True)]}"/>
                </div>
            </xpath>
        </field>
    </record>

</odoo>