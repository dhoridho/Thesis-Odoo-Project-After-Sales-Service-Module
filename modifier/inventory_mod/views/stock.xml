<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_stock_move_operations2">
            <field name="name">view_stock_move_operations2</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_stock_move_operations"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_line_ids']" position="before">

                    <label for="attributes_ids"/>
                    <div class="o_row">
                        <div>
                            <field name="attributes_ids" widget="many2many_tags"/>
                        </div>
                        <div>

                            <button name="generate_label_report" string="Generate Barcode Label" type="object" class="btn btn-primary"/>
                            <button name="merge_pdf" string="Merge Barcode Label" type="object" class="btn btn-primary"/>
                        </div>

                    </div>
                    <label for="binary_merge_pdf"/>
                    <div class="o_row">
                        <div>
                            <field name="binary_merge_pdf" filename="file_name" readonly="1"/>
                            <field name="file_name" invisible="1"/>
                        </div>
                    </div>

                </xpath>
                <xpath expr="//field[@name='move_line_ids']" position="after">
                    <field name="attachment_pdf_ids">
                        <tree string="Attachments">
                            <field name="move_line_ids" string="Line"/>
                            <field name="lot_ids" string="lot"/>
                            <field name="binary_pdf" string="PDF File" widget="binary" />
                            <button name="generate_pdf" string="Generate PDF" type="object" class="btn btn-primary"/>
                        </tree>
                    </field>
                </xpath>

<!--                <xpath expr="//field[@name='qty_per_lot']" position="before">-->
<!--                    <field name="qty_to_generate" attrs="{'invisible': ['|', ('picking_code', '!=', 'incoming'), ('serial', '!=', 'lot')]}" />-->
<!--                </xpath>-->
<!--                <xpath expr="//field[@name='qty_per_lot']" position="after">-->
<!--                    <field name="actual_roll"/>-->
<!--                </xpath>-->


            </field>
        </record>


