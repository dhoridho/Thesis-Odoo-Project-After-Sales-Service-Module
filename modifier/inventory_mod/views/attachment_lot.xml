<odoo>
    <data>

        <record id="view_move_attachment_lot_pdf_tree" model="ir.ui.view">
            <field name="name">move.attachment.lot.pdf.tree</field>
            <field name="model">move_attachment.lot_pdf</field>
            <field name="arch" type="xml">
                <tree string="Barcode Labels">
                    <field name="name"/>
                    <field name="move_id"/>
                    <field name="is_generated"/>
                    <field name="is_merged"/>
                </tree>
            </field>
        </record>

        <record id="view_move_attachment_lot_pdf_tree" model="ir.ui.view">
            <field name="name">move.attachment.lot.pdf.tree</field>
            <field name="model">move_attachment.lot_pdf</field>
            <field name="arch" type="xml">
                <tree string="Barcode Labels">
                    <field name="name"/>
                    <field name="move_id"/>
                    <field name="is_generated"/>
                    <field name="is_merged"/>
                </tree>
            </field>
        </record>

        <record id="view_move_attachment_lot_pdf_form" model="ir.ui.view">
            <field name="name">move.attachment.lot.pdf.form</field>
            <field name="model">move_attachment.lot_pdf</field>
            <field name="arch" type="xml">
                <form string="Barcode Label Move">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="move_id"/>
                            <field name="binary_pdf" filename="name"/>
                            <field name="is_generated"/>
                            <field name="is_merged"/>
                        </group>
                        <group>
                            <field name="move_line_ids" widget="many2many_tags"/>
                            <field name="lot_ids" widget="many2many_tags"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_move_attachment_lot_pdf" model="ir.actions.act_window">
            <field name="name">Barcode Label Move</field>
            <field name="res_model">move_attachment.lot_pdf</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_move_attachment_lot_pdf"
                  name="Barcode Label Move"
                  parent="stock.menu_stock_root"
                  action="action_move_attachment_lot_pdf"/>

    </data>
</odoo>