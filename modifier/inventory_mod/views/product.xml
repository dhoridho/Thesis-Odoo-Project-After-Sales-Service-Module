    <record id="view_production_lot_form_form" model="ir.ui.view">
      <field name="name">view_production_lot_form.form</field>
      <field name="model">stock.production.lot</field>
      <field name="inherit_id" ref="stock.view_production_lot_form" />
      <field name="arch" type="xml">
        <xpath expr="//notebook" position="inside">
          <page name="deskripsi_printout" string="Deskription Print">
            <group>
              <group>
                <field name="variant_barcode_label" />
                <field name="warna" />
              </group>
              <group>
                <field name="lebar" />
                <field name="k_motif" />
                <field name="jenis_print" />
              </group>
            </group>
          </page>

        </xpath>
      </field>
    </record>


    <record model="ir.ui.view" id="product_normal_form_view2">
      <field name="name">product_normal_form_view2</field>
      <field name="model">product.product</field>
      <field name="inherit_id" ref="product.product_normal_form_view" />
      <field name="arch" type="xml">
        <xpath expr="//field[@name='uom_po_id']" position="after">
          <field name="default_qty_roll" />
