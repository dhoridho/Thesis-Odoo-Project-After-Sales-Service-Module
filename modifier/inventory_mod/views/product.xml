    <record model="ir.ui.view" id="product_category_form_view2">
      <field name="name">product_category_form_view2</field>
      <field name="model">product.category</field>
      <field name="inherit_id" ref="product.product_category_form_view" />
      <field name="arch" type="xml">

        <group name="first" position="after">
          <group string="Variant">
            <field name="attribute_ids" widget="many2many_tags" invisible="1" />
            <field name="attribute_line_ids" widget="one2many" context="{'show_attribute': False}"
              nolabel="1">
              <tree editable="bottom" nolabel="1">
                <field name="attribute_id" attrs="{'readonly': [('id', '!=', False)]}"
                  domain="[('id', 'not in', parent.attribute_ids)]" />
                <field name="value_ids" widget="many2many_tags"
                  options="{'no_create_edit':
                True}"
                  context="{'default_attribute_id': attribute_id, 'show_attribute': False}" />
              </tree>
            </field>
          </group>
        </group>

      </field>
    </record>

    <record id="view_product_attr_inherit_mod" model="ir.ui.view">
      <field name="name">jmk.product.attr.inherit</field>
      <field name="model">product.product</field>
      <field name="inherit_id" ref="product.product_normal_form_view" />
      <field name="arch" type="xml">
        <xpath expr="//page[last()]" position="after">
          <page string="Attribute Values">
            <group string="Attribute Values">
              <group>
                <field name="jenis_kain"/>
                <field name="jenis_print"/>
                <field name="warna"/>
                <field name="alias_print"/>
                <field name="panjang"/>
                <field name="lebar"/>
              </group>
              <group>
                <field name="gr_jual"/>
                <field name="label"/>
                <field name="tipe"/>
                <field name="jenis_proses"/>
                <field name="tipe_weaving"/>
              </group>
            </group>
          </page>
        </xpath>
      </field>
    </record>

    <record id="action_product_template_archived" model="ir.actions.server">
      <field name="name">Is Archived</field>
      <field name="model_id" ref="product.model_product_template"/>
      <field name="binding_model_id" ref="product.model_product_template"/>
      <field name="state">code</field>
      <field name="code">
        if records :
            records.active_is_archived()
      </field>
    </record>

