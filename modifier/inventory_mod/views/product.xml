      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_only_form_view" />
      <field name="arch" type="xml">
        <field name="default_code" position="after">

<!--          <field name="auto_generate_product_code" invisible="1" />-->

        </field>
        <xpath expr="//field[@name='attribute_line_ids']/tree" position="inside">
          <field name="filter_attribute_variant" widget="many2many_tags" invisible="1" />
          <!-- <field name="filter_value_variant" widget="many2many_tags" invisible="1"/> -->
        </xpath>
        <xpath expr="//field[@name='attribute_line_ids']/tree/field[@name='attribute_id']"
          position="attributes">
          <attribute name="domain">[('id', 'in', filter_attribute_variant)]</attribute>
        </xpath>
        <!-- <xpath expr="//field[@name='attribute_line_ids']/tree/field[@name='value_ids']"
        position="attributes">
          <attribute name="domain">[('id', 'in', filter_value_variant)]</attribute>
        </xpath> -->
        <xpath expr="//field[@name='attribute_line_ids']/tree/field[@name='value_ids']"
          position="after">
          <field name="barcode_label" />
        </xpath>


      </field>
    </record>

