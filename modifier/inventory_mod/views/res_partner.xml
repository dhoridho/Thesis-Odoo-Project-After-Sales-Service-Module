<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="res_partner_tax_form_view">
            <field name="name">res_partner_tax_form_view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="l10n_id_efaktur.res_partner_tax_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='l10n_id_pkp']" position="after">
                    <field name="vendor_initial" attrs="{'invisible':[('is_vendor', '=', False)]}"/>
                    <field name="vendor_real_name" attrs="{'invisible':[('is_vendor', '=', False)]}"/>
                </xpath>
            </field>
        </record>

        <record id="view_partner_form_mod" model="ir.ui.view">
            <field name="name">res.partner.form.mod</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="purchase.view_partner_property_form"/>
            <field name="arch" type="xml">
                <field name="property_purchase_currency_id" position="after">
                    <button name="update_po_name" string="Update PO Initial" type="object" attrs="{'invisible':[('is_vendor', '=', False)]}"/>
                </field>
            </field>
        </record>
    </data>
</odoo>