<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
        <record id="action_generate_product_variant_code" model="ir.actions.server">
            <field name="name">Generate Product Code</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field name="binding_model_id" ref="product.model_product_product"/>
            <field name="state">code</field>
            <field name="code">
                if records :
                    records.generate_product_varian_code()
            </field>
        </record>
        <record id="action_generate_pdf" model="ir.actions.server">
            <field name="name">Generate Pdf</field>
            <field name="model_id" ref="inventory_mod.model_move_attachment_lot_pdf"/>
            <field name="binding_model_id" ref="inventory_mod.model_move_attachment_lot_pdf"/>
            <field name="state">code</field>
            <field name="code">
                if records :
                    records.generate_pdf()
            </field>
        </record>
        <record id="action_reset_generate_pdf" model="ir.actions.server">
            <field name="name">Reset Pdf</field>
            <field name="model_id" ref="inventory_mod.model_move_attachment_lot_pdf"/>
            <field name="binding_model_id" ref="inventory_mod.model_move_attachment_lot_pdf"/>
            <field name="state">code</field>
            <field name="code">
                if records :
                    records.reset_generate_pdf()
            </field>
        </record>
        <record id="action_merge_pdf" model="ir.actions.server">
            <field name="name">Merge Pdf</field>
            <field name="model_id" ref="inventory_mod.model_move_attachment_lot_pdf"/>
            <field name="binding_model_id" ref="inventory_mod.model_move_attachment_lot_pdf"/>
            <field name="state">code</field>
            <field name="code">
                if records :
                    records.merge_pdf()
            </field>
        </record>
    
    </data>
</odoo>

