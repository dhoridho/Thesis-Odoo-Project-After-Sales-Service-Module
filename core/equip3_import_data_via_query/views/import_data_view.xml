<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="view_import_data_record_form">
            <field name="name">view.import.data.record</field>
            <field name="model">import.record.data</field>
            <field name="arch" type="xml">
                <form string="Import Record">
                    <header>

                        <button class="oe_stat_button" name="button_confirm" string="Confirm" type="object"
                                states="draft"/>
                        <button class="oe_stat_button" name="button_action_import" string="Import Data" type="object"
                                states="confirm"/>
                        <button class="oe_stat_button" name="button_action_draft" string="Set To Draft" type="object"
                                states="failed"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>
                    </header>

                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="record_type" required="1"
                                       attrs="{'readonly':[('state','not in',['draft'])]}"/>
                                <field name="partner_id" 
                                        attrs="{'invisible':[('record_type','not in',['return_import_purchase','return_import_sale'])], 
                                        'required': [('record_type', 'in',['return_import_purchase','return_import_sale'])],
                                        'readonly':[('state','not in',['draft'])]}"/>
                                <field name="warehouse_id" 
                                        attrs="{'invisible':[('record_type','not in',['return_import_purchase','return_import_sale'])], 
                                        'required': [('record_type', 'in',['return_import_purchase','return_import_sale'])],
                                        'readonly':[('state','not in',['draft'])]}"/>
                                <field name="filter_location_ids" invisible="1"/>
                                <field name="location_id" domain="[('id', 'in', filter_location_ids)]" 
                                        attrs="{'invisible':[('record_type','not in',['return_import_purchase','return_import_sale'])], 
                                        'required': [('record_type', 'in',['return_import_purchase','return_import_sale'])],
                                        'readonly':[('state','not in',['draft'])]}"/>
                                <field name="no_return"
                                        attrs="{'invisible':[('record_type','not in',['return_import_purchase','return_import_sale'])], 
                                        'required': [('record_type', 'in',['return_import_purchase','return_import_sale'])],
                                        'readonly':[('state','not in',['draft'])]}"/>
                                <field name="file" filename="file_name"
                                       attrs="{'readonly':[('state','not in',['draft'])],
                                       'invisible':[('record_type', 'in',['return_import_purchase','return_import_sale'])]}"/>
                                <field name="file_name" invisible="1"/>
                                <field name="sheet_number" required="1" style="width: 80px;"
                                       attrs="{'readonly':[('state','not in',['draft'])],
                                       'invisible':[('record_type', 'in',['return_import_purchase','return_import_sale'])]}"/>
                                <field name="created_date" readonly="1"/>
                            </group>
                            <group>
                                <div class="alert alert-info" role="alert"
                                     attrs="{'invisible':[('record_type', '!=','purchase_import')]}">
                                    Purchase Order Sample Format :
                                    <a href="/equip3_import_data_via_query/static/PurchaseOrderFormat.xlsx">
                                        <b>ImportPurchaseOrder.xlsx</b>
                                    </a>
                                </div>
                                <div class="alert alert-info" role="alert"
                                     attrs="{'invisible':[('record_type', '!=','pos_import')]}">
                                    POS Order Import Sample Format :
                                    <a href="/equip3_import_data_via_query/static/PosOrderFormat.xlsx">
                                        <b>ImportPurchaseOrder.xlsx</b>
                                    </a>
                                </div>
                                <div class="alert alert-info" role="alert"
                                     attrs="{'invisible':[('record_type', '!=','product_import')]}">
                                    Product Import Sample Format :
                                    <a href="/equip3_import_data_via_query/static/ImportProductnew.xlsx">
                                        <b>ImportProduct.xlsx</b>
                                    </a>
                                </div>
                                <div class="alert alert-info" role="alert"
                                     attrs="{'invisible':[('record_type', '!=','receiving_notes_import')]}">
                                    Receiving Notes Import Sample Format :
                                    <a href="/equip3_import_data_via_query/static/ReceivingNotesFormat.xlsx">
                                        <b>TemplateReceivingNotes.xlsx</b>
                                    </a>
                                </div>
                                <div class="alert alert-info" role="alert"
                                     attrs="{'invisible':[('record_type', '!=','delivery_orders_import')]}">
                                    Delivery Orders Import Sample Format :
                                    <a href="/equip3_import_data_via_query/static/DeliveryOrdersFormat.xlsx">
                                        <b>TemplateDeliveryOrders.xlsx</b>
                                    </a>
                                </div>

                            </group>
                        </group>
                        <notebook>
                            <page string="Error Log">
                                <field name="error_message" readonly="1"/>
                            </page>
                            <page string="Product List">
                                <field name="product_list" readonly="1"/>
                            </page>

                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="view_import_record_tree">
            <field name="name">import.record.tree.view</field>
            <field name="model">import.record.data</field>
            <field name="arch" type="xml">
                <tree string="Import Records">
                    <field name="name"/>
                    <field name="record_type"/>
                    <field name="file_name"/>
                    <field name="state" decoration-success="state == 'done'" decoration-info="state == 'draft'"
                           decoration-warning="state == 'confirm'" decoration-danger="state == 'failed'"
                           widget="badge"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_import_record_data">
            <field name="name">Import Data</field>
            <field name="res_model">import.record.data</field>
            <!--<field name="view_type">form</field>-->
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Import Data" id="menu_open_import_record_data"
                  action="action_import_record_data" sequence="1"
                  parent="base.menu_administration"/>

    </data>
</odoo>

