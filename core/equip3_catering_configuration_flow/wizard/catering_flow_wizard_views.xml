<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="catering_flow_wizard_view_form" model="ir.ui.view">
        <field name="name">catering_flow_wizard.view.form</field>
        <field name="model">catering.flow.wizard</field>
        <field name="arch" type="xml">
            <form string="Catering Flow">
                <script>
                    $(".o_control_panel").remove();
                </script>
                <sheet>
                    <h1>Catering Flow</h1>
                    <div class="container">
                        <br/>
                        <div class="row">
                            <div class="col-1 offset-2 m-0 p-0 text-center">
                                <button name="button_products" type="object" class="text-center m-0 p-0 btn btn-secondary" width="70" height="70">
                                    <img src="/equip3_catering_configuration_flow/static/img/product-catering.svg" width="55"/>
                                </button>
                                <br/>
                                <b>Product Catering</b>
                            </div> 
                        </div>
                        <br/>
                        <div class="row">
                            <div class="col-1"></div>
                            <div class="col-1 m-0 p-0 text-center">
                                <button name="button_menu_planner" type="object" class="text-center m-0 p-0 btn btn-secondary" width="70" height="70">
                                    <img src="/equip3_catering_configuration_flow/static/img/menu-planner.svg" width="55"/>
                                </button>
                                <b>Menu Planner</b>
                            </div>
                            <div class="col-1 m-0 my-auto p-0 text-center" width="55px">
                                <button name="button_fee_head" type="object" class="p-0" disabled="disabled">
                                    <i class="fa fa-arrow-right" style="font-size:4rem;"/>
                                </button>
                                <div height="35px"></div>
                            </div>
                            <div class="col-1 m-0 p-0 text-center">
                                <button name="button_catering_order" type="object" class="text-center m-0 p-0 btn btn-secondary" width="70" height="70">
                                    <img src="/equip3_catering_configuration_flow/static/img/catering-order.svg" width="55"/>  
                                </button>
                                <b>Catering Order</b>
                            </div>
                            <div class="col-1 m-0 my-auto p-0 text-center" width="55px">
                                <button name="button_fee_head" type="object" class="p-0" disabled="disabled">
                                    <i class="fa fa-arrow-right" style="font-size:4rem;"/>
                                </button>
                                <div height="35px"></div>
                            </div>
                            <div class="col-1 m-0 p-0 text-center">
                                <button name="button_delivery" type="object" class="text-center m-0 p-0 btn btn-secondary" width="70" height="70">
                                    <img src="/equip3_catering_configuration_flow/static/img/delivery.svg" width="55"/>
                                    <br/>
                                </button> 
                                <b>Delivery</b>   
                            </div>
                            <div class="col-1 m-0 my-auto p-0 text-center" width="55px">
                                <button name="button_fee_head" type="object" class="p-0" disabled="disabled">
                                    <i class="fa fa-arrow-right" style="font-size:4rem;"/>
                                </button>
                                <div height="35px"></div>
                            </div>
                            <div class="col-1 m-0 p-0 text-center">
                                <button name="button_invoice" type="object" class="text-center m-0 p-0 btn btn-secondary" width="70" height="70">
                                    <img src="/equip3_catering_configuration_flow/static/img/invoices.svg" width="55"/>
                                </button>
                                <b>Invoice</b>
                            </div>
                            <div class="col-1"></div>
                            <div class="col-1 m-0 p-0 text-center">
                                <button name="button_reporting" type="object" class="text-center m-0 p-0 btn btn-secondary" width="70" height="70">
                                    <img src="/equip3_catering_configuration_flow/static/img/reporting.svg" width="55"/>
                                </button>
                                <b>Reporting</b>
                            </div>
                        </div>
                        <br/>
                        <div class="row">
                            <div class="col-1 m-0 p-0 text-center">
                                <button name="button_customers" type="object" class="text-center m-0 p-0 btn btn-secondary" width="70" height="70">
                                    <img src="/equip3_catering_configuration_flow/static/img/customer.svg" width="55"/>   
                                </button>
                                <b>Customers</b>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="catering_flow_wizard_action" model="ir.actions.act_window">
        <field name="name">Catering Flow</field>
        <field name="res_model">catering.flow.wizard</field>
        <field name="view_mode">form</field>
    </record>

    <record id="catering_configuration_flow_action_client" model="ir.actions.client">
        <field name="name">Catering Flow</field>
        <field name="tag">catering_configuration_flow_tag</field>
    </record>

    <menuitem
        id="catering_flow_wizard_menu"
        name="Catering Flow"
        action="catering_configuration_flow_action_client"
        parent="equip3_catering_masterdata.catering_menu_root"
        sequence="-1"/>

    <record id="equip3_catering_configuration_flow.catering_flow_wizard_menu" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-main-flow</field>
    </record>
</odoo>
