<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- revenue.forecast.report form view -->
        <record id="revenue_forecast_report_view_form" model="ir.ui.view">
            <field name="name">revenue.forecast.report.view.form</field>
            <field name="model">revenue.forecast.report</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <!-- Add your fields here -->
                            <group name="start_date">
                                <field name="start_date"/>
                            </group>
                            <group name="end_date">
                                <field name="end_date"/>
                            </group>
                            <group name="property">
                                <field name="property_ids" widget="many2many_tags"/>
                            </group>
                            <group name="user_id">
                                <field name="user_id" invisible="1"/>
                            </group>
                        </group>
                        <footer>
                            <button name="get_pdf_report" type="object" string="Print Report" icon="fa-print" class="oe_highlight" default_focus="1" invisible="1"/>
                            <button name="get_excel_report" type="object" string="Print Report" icon="fa-print" class="oe_highlight" default_focus="1"/>
                            <button string="Cancel" special="cancel" icon="fa-times-circle"/>
                        </footer>  
                    </sheet>
                </form>
            </field>
        </record>
        <record id="revenue_forecast_action" model="ir.actions.act_window">
            <field name="name">Revenue Forecast</field>
            <field name="res_model">revenue.forecast.report</field>
            <field name="view_id" ref="revenue_forecast_report_view_form"/>
            <field name="binding_view_types">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'default_user_id': uid}</field>
        </record>

        <menuitem
            id="revenue_forecast_menu_act"
            name="Revenue Forecast"
            parent="property_rental_mgt_app.menu_property_report"
            action="equip3_property_report.revenue_forecast_action"
            sequence="53"/>
    </data>
</odoo>