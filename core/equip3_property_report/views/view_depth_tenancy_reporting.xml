<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>     

        <record model="ir.ui.view" id="depth_tenancy_report_wizard">
              <field name="name">depth.tenancy.reporting.form</field>
              <field name="model">depth.tenancy</field>
              <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="from_date"/>                                
                            </group>
                            <group>
                                <field name="to_date"/>
                            </group>                            
                        </group>
                        <group>
                            <group>
                                <field name="renter_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                        <footer>
                          <!--   <button name="get_expired_contract" type="object" string="Display Expired Contract" icon="fa-list" class="oe_highlight" default_focus="1"/> -->

                            <button name="get_pdf_report" type="object" string="Print Report" icon="fa-print" class="oe_highlight" default_focus="1"/>
                            <button string="Cancel" special="cancel" icon="fa-times-circle"/>
                        </footer>                        
                    </sheet>
                </form>
             </field>
        </record>

    <record model="ir.actions.act_window" id="action_depth_tenancy_report">
      <field name="name">In Depth Tenancy Report</field>
      <field name="res_model">depth.tenancy</field>
      <field name="view_id" ref="depth_tenancy_report_wizard"/>
      <field name="binding_view_types">form</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
    </record>  

     <menuitem
            id="menu_in_depth_tenancy_report"
            parent="property_rental_mgt_app.menu_property_report"
            name="In-Depth Tenancy Reporting"
            action="equip3_property_report.action_depth_tenancy_report"
            sequence="52"/> 

    </data>
</odoo>