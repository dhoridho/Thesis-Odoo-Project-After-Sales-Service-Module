<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="report.paperformat" id="revenue_forecast_template_paper">
        <field name="name">Revenue Forecast Report</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_width">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">30</field>
        <field name="margin_right">5</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">20</field>
        <field name="dpi">90</field>
    </record>

    <report
        id="print_revenue_forecast_report_action"
        model="revenue.forecast.report"
        string="Revenue Forecast Report"
        report_type="qweb-pdf"
        name="equip3_property_report.revenue_forecast_template_report"
        paperformat="revenue_forecast_template_paper"
        menu="False"/>
    
    <template id="revenue_forecast_template_report">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
            <div class="page">
                <div class="row">
                    <div class="col-12"><h4 class="text-center" style="text-align:center;"><strong>Contract Revenue Forecast</strong></h4></div>
                </div>
                <div class="row" style="margin-top: 10px;">
                    <div class="col-4"></div>
                    <div class="col-4">
                        <h5 class="text-center" style="align:center;">
                            <t t-esc="from_date"/>
                            <span>to</span>
                            <t t-esc="to_date"/>
                        </h5>
                    </div>
                    <div class="col-4"></div>
                    <br/>
                </div><br/>
                <t t-foreach="user_ids" t-as="user">
                    <div class="row"><br/>
                        <div class="col-4"><h5 class="text-left" style="text-align:left;"><strong>Summary</strong></h5></div>
                        <div class="col-4"></div>
                        <div class="col-4"></div>
                    </div>
                    <div class="row" style="margin-top:10px;">
                        <div class="col-4"><h6 class="text-left" style="text-align:left;">Realized Revenue (Paid)</h6></div>
                        <div class="col-8"><span class="text-left" style="text-align:left;"><t t-esc="sum_invoice_paid"/></span></div>
                    </div>
                    <div class="row"><br/>
                        <div class="col-4"><h6 class="text-left" style="text-align:left;">Realized Revenue (Unpaid)</h6></div>
                        <div class="col-8"><span class="text-left" style="text-align:left;"><t t-esc="sum_invoice_not_paid"/></span></div>
                    </div>
                    <div class="row"><br/>
                        <div class="col-4"><h6 class="text-left" style="text-align:left;">Realizable Revenue</h6></div>
                        <div class="col-8"><span class="text-left" style="text-align:left;"><t t-esc="expected_revenue_total"/></span></div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-4"><h5 class="text-left" style="text-align:left;"><strong>Realized Revenue (Paid)</strong></h5></div>
                    </div>
                    <table class="table table-condensed table-bordered" style="width: 100%; margin-top:10px;">
                        <thead>
                            <th class="text-center" style="width: 11%">Number</th>
                            <th class="text-center" style="width: 11%">Customer</th>
                            <th class="text-center" style="width: 11%,color:gray">Invoice Date</th>
                            <th class="text-center" style="width: 11%,color:gray">Due Date</th>
                            <th class="text-center" style="width: 11%">Companay</th>
                            <th class="text-center" style="width: 11%">Total</th>
                            <th class="text-center" style="width: 11%">Status</th>
                            <th class="text-center" style="width: 11%">Payment Status</th>
                        </thead>
                        <tbody>
                            <t t-foreach="invoice_ids_paid" t-as="doc">  
                                <tr>
                                    <td>
                                        <span t-esc="doc.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.partner_id.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.invoice_date"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.invoice_date_due"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.company_id.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.amount_total"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.state"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.payment_state"/>
                                    </td>

                                </tr>
                            </t>
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-4"><h5 class="text-left" style="text-align:left;"><strong>Realized Revenue (Unpaid)</strong></h5></div>
                    </div>
                    <table class="table table-condensed table-bordered" style="width: 100%; margin-top:10px;">
                        <thead>
                            <th class="text-center" style="width: 11%">Number</th>
                            <th class="text-center" style="width: 11%">Customer</th>
                            <th class="text-center" style="width: 11%,color:gray">Invoice Date</th>
                            <th class="text-center" style="width: 11%,color:gray">Due Date</th>
                            <th class="text-center" style="width: 11%">Companay</th>
                            <th class="text-center" style="width: 11%">Total</th>
                            <th class="text-center" style="width: 11%">Status</th>
                            <th class="text-center" style="width: 11%">Payment Status</th>
                        </thead>
                        <tbody>
                            <t t-foreach="invoice_ids_not_paid" t-as="doc">  
                                <tr>
                                    <td>
                                        <span t-esc="doc.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.partner_id.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.invoice_date"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.invoice_date_due"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.company_id.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.amount_total"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.state"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.payment_state"/>
                                    </td>

                                </tr>
                            </t>
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-4"><h5 class="text-left" style="text-align:left;"><strong>Realizable Revenue</strong></h5></div>
                    </div>
                    <table class="table table-condensed table-bordered" style="width: 100%; margin-top:10px;">
                        <thead>
                            <th class="text-center" style="width: 11%">Property</th>
                            <th class="text-center" style="width: 11%">Contract</th>
                            <th class="text-center" style="width: 11%">Expected Invoice Date</th>
                            <th class="text-center" style="width: 11%">Expected Value</th>
                        </thead>
                        <tbody>
                            <t t-foreach="realizable_revenue" t-as="doc">  
                                <tr>
                                    <td>
                                        <span t-esc="doc['property']"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc['contract']"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc['invoice_date']"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc['invoice_amount']"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </t>
            </div>
            <br/><p style="page-break-before:always;"></p>
            <div class="footer">
                <div class="text-center" style="border-top: 1px solid black;">
                    <div class="text-muted">Page: 
                    <span class="page"/>
                    / 
                    <span class="topage"/></div>
                </div>
            </div>
            </t>
        </t>
    </template>
</odoo>
