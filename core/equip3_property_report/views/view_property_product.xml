<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- model.name inherit pivot view -->
        <record id="property_product_pivot_view_inherit" model="ir.ui.view">
            <field name="name">Pivot View Inherit Product Property</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="property_rental_mgt_app.property_graph_pivot"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='property_price']" position="before">
                    <field name="base_price" type="measure"/>
                </xpath>
                <xpath expr="//field[@name='rent_price']" position="after">
                    <field name="maintenance_spent" type="measure"/>
                </xpath>
            </field>
        </record>
    </data>    
</odoo>