<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="report.paperformat" id="expense_forecast_template_paper">
        <field name="name">Expense Forecast Report</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_width">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">30</field>
        <field name="margin_right">5</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">20</field>
        <field name="dpi">90</field>
    </record>

    <report
        id="print_expense_forecast_report_action"
        model="expense.forecast.report"
        string="Expense Forecast Report"
        report_type="qweb-pdf"
        name="equip3_property_report.expense_forecast_template_report"
        paperformat="expense_forecast_template_paper"
        menu="False"/>
    
    <template id="expense_forecast_template_report">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
            <div class="page">
                <div class="row">
                    <div class="col-12"><h4 class="text-center" style="text-align:center;"><strong>Expense Forecast</strong></h4></div>
                </div>
                <div class="row" style="margin-top: 10px;">
                    <div class="col-4"></div>
                    <div class="col-4">
                        <h5 class="text-center" style="align:center;">
                            <t t-esc="from_date"/>
                            <span>to</span>
                            <t t-esc="to_date"/>
                        </h5>
                    </div>
                    <div class="col-4"></div>
                    <br/>
                </div><br/>
                <t t-foreach="user_ids" t-as="user">
                    <div class="row"><br/>
                        <div class="col-4"><h5 class="text-left" style="text-align:left;"><strong>Summary</strong></h5></div>
                        <div class="col-4"></div>
                        <div class="col-4"></div>
                    </div>
                    <div class="row" style="margin-top:10px;">
                        <div class="col-8"><h6 class="text-left" style="text-align:left;">Maintenance Work Order Realized Expense (Done)</h6></div>
                        <div class="col-4"><span class="text-left" style="text-align:left;"><t t-esc="sum_mwo_done"/></span></div>
                    </div>
                    <div class="row"><br/>
                        <div class="col-8"><h6 class="text-left" style="text-align:left;">Maintenance Repair Order Realized Expense (Done)</h6></div>
                        <div class="col-4"><span class="text-left" style="text-align:left;"><t t-esc="sum_mro_done"/></span></div>
                    </div>
                    <div class="row"><br/>
                        <div class="col-8"><h6 class="text-left" style="text-align:left;">Maintenance Work Order Realized Expense (In Progress/Post)</h6></div>
                        <div class="col-4"><span class="text-left" style="text-align:left;"><t t-esc="sum_mwo_progress"/></span></div>
                    </div>
                    <div class="row"><br/>
                        <div class="col-8"><h6 class="text-left" style="text-align:left;">Maintenance Repair Order Realized Expense (In Progress/Post)</h6></div>
                        <div class="col-4"><span class="text-left" style="text-align:left;"><t t-esc="sum_mro_progress"/></span></div>
                    </div>
                    <div class="row"><br/>
                        <div class="col-8"><h6 class="text-left" style="text-align:left;">Realized Expense Plan (Paid)</h6></div>
                        <div class="col-4"><span class="text-left" style="text-align:left;"><t t-esc="sum_bill_paid"/></span></div>
                    </div>
                    <div class="row"><br/>
                        <div class="col-8"><h6 class="text-left" style="text-align:left;">Realized Expense Plan (Unpaid)</h6></div>
                        <div class="col-4"><span class="text-left" style="text-align:left;"><t t-esc="sum_bill_unpaid"/></span></div>
                    </div>
                    <div class="row"><br/>
                        <div class="col-8"><h6 class="text-left" style="text-align:left;">Realizable Expense Plan</h6></div>
                        <div class="col-4"><span class="text-left" style="text-align:left;"><t t-esc="realiziable_expense_total"/></span></div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-12"><h5 class="text-left" style="text-align:left;"><strong>Maintenance Work Order Realized Expense (Done)</strong></h5></div>
                    </div>
                    <table class="table table-condensed table-bordered" style="width: 100%; margin-top:10px;">
                        <thead>
                            <th class="text-center" style="width: 11%">Number</th>
                            <th class="text-center" style="width: 11%">Customer</th>
                            <th class="text-center" style="width: 11%">Property</th>
                            <th class="text-center" style="width: 11%">Start Date</th>
                            <th class="text-center" style="width: 11%">Total</th>
                        </thead>
                        <tbody>
                            <t t-foreach="mwo_done" t-as="doc">  
                                <tr>
                                    <td>
                                        <span t-esc="doc.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.partner_id.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.property_id.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.startdate"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.amount_total"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table><br/>
                    <div class="row">
                        <div class="col-12"><h5 class="text-left" style="text-align:left;"><strong>Maintenance Repair Order Realized Expense (Done)</strong></h5></div>
                    </div>
                    <table class="table table-condensed table-bordered" style="width: 100%; margin-top:10px;">
                        <thead>
                            <th class="text-center" style="width: 11%">Number</th>
                            <th class="text-center" style="width: 11%">Customer</th>
                            <th class="text-center" style="width: 11%">Property</th>
                            <th class="text-center" style="width: 11%">Start Date</th>
                            <th class="text-center" style="width: 11%">Total</th>
                        </thead>
                        <tbody>
                            <t t-foreach="mro_done" t-as="doc">  
                                <tr>
                                    <td>
                                        <span t-esc="doc.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.partner_id.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.property_id.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.date_start"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.amount_total"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table><br/>
                    <div class="row">
                        <div class="col-12"><h5 class="text-left" style="text-align:left;"><strong>Maintenance Work Order Realized Expense (In Progress/Post)</strong></h5></div>
                    </div>
                    <table class="table table-condensed table-bordered" style="width: 100%; margin-top:10px;">
                        <thead>
                            <th class="text-center" style="width: 11%">Number</th>
                            <th class="text-center" style="width: 11%">Customer</th>
                            <th class="text-center" style="width: 11%">Property</th>
                            <th class="text-center" style="width: 11%">Start Date</th>
                            <th class="text-center" style="width: 11%">Total</th>
                        </thead>
                        <tbody>
                            <t t-foreach="mwo_progress" t-as="doc">  
                                <tr>
                                    <td>
                                        <span t-esc="doc.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.partner_id.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.property_id.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.startdate"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.amount_total"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table><br/>
                    <div class="row">
                        <div class="col-12"><h5 class="text-left" style="text-align:left;"><strong>Maintenance Repair Order Realized Expense (In Progress/Post)</strong></h5></div>
                    </div>
                    <table class="table table-condensed table-bordered" style="width: 100%; margin-top:10px;">
                        <thead>
                            <th class="text-center" style="width: 11%">Number</th>
                            <th class="text-center" style="width: 11%">Customer</th>
                            <th class="text-center" style="width: 11%">Property</th>
                            <th class="text-center" style="width: 11%">Start Date</th>
                            <th class="text-center" style="width: 11%">Total</th>
                        </thead>
                        <tbody>
                            <t t-foreach="mro_progress" t-as="doc">  
                                <tr>
                                    <td>
                                        <span t-esc="doc.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.partner_id.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.property_id.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.date_start"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.amount_total"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table><br/>
                    <div class="row">
                        <div class="col-4"><h5 class="text-left" style="text-align:left;"><strong>Realized Expense Plan (Paid)</strong></h5></div>
                    </div>
                    <table class="table table-condensed table-bordered" style="width: 100%; margin-top:10px;">
                        <thead>
                            <th class="text-center" style="width: 11%">Number</th>
                            <th class="text-center" style="width: 11%">Vendor</th>
                            <th class="text-center" style="width: 11%,color:gray">Bill Date</th>
                            <th class="text-center" style="width: 11%,color:gray">Property</th>
                            <th class="text-center" style="width: 11%">Company</th>
                            <th class="text-center" style="width: 11%">Total</th>
                            <th class="text-center" style="width: 11%">Status</th>
                            <th class="text-center" style="width: 11%">Payment Status</th>
                        </thead>
                        <tbody>
                            <t t-foreach="bill_paid" t-as="doc">  
                                <tr>
                                    <td>
                                        <span t-esc="doc.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.partner_id.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.invoice_date"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.agreement_id.property_id.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.company_id.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.amount_total"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.state"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.payment_state"/>
                                    </td>

                                </tr>
                            </t>
                        </tbody>
                    </table><br/>
                    <div class="row">
                        <div class="col-4"><h5 class="text-left" style="text-align:left;"><strong>Realized Expense Plan (Unpaid)</strong></h5></div>
                    </div>
                    <table class="table table-condensed table-bordered" style="width: 100%; margin-top:10px;">
                        <thead>
                            <th class="text-center" style="width: 11%">Number</th>
                            <th class="text-center" style="width: 11%">Vendor</th>
                            <th class="text-center" style="width: 11%,color:gray">Bill Date</th>
                            <th class="text-center" style="width: 11%,color:gray">Property</th>
                            <th class="text-center" style="width: 11%">Company</th>
                            <th class="text-center" style="width: 11%">Total</th>
                            <th class="text-center" style="width: 11%">Status</th>
                            <th class="text-center" style="width: 11%">Payment Status</th>
                        </thead>
                        <tbody>
                            <t t-foreach="bill_unpaid" t-as="doc">  
                                <tr>
                                    <td>
                                        <span t-esc="doc.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.partner_id.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.invoice_date"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.expense_plan_id.agreement_id.property_id.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.company_id.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.amount_total"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.state"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.payment_state"/>
                                    </td>

                                </tr>
                            </t>
                        </tbody>
                    </table><br/>
                    <div class="row">
                        <div class="col-4"><h5 class="text-left" style="text-align:left;"><strong>Realizable Expense</strong></h5></div>
                    </div>
                    <table class="table table-condensed table-bordered" style="width: 100%; margin-top:10px;">
                        <thead>
                            <th class="text-center" style="width: 11%">Property</th>
                            <th class="text-center" style="width: 11%">Contract</th>
                            <th class="text-center" style="width: 11%">Expected Bill Date</th>
                            <th class="text-center" style="width: 11%">Expected Value</th>
                        </thead>
                        <tbody>
                            <t t-foreach="realiziable_expense" t-as="doc">  
                                <tr>
                                    <td>
                                        <span t-esc="doc['property']"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc['contract']"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc['expense_date']"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc['expense_amount']"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table><br/>
                </t>
            </div>
            <br/><p style="page-break-before:always;"></p>
            <div class="footer">
                <div class="text-center" style="border-top: 1px solid black;">
                    <div class="text-muted">Page: 
                    <span class="page"/>
                    / 
                    <span class="topage"/></div>
                </div>
            </div>
            </t>
        </t>
    </template>
</odoo>
