<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="view_rental_order_schedule_gantt_new" model="ir.ui.view">
            <field name="name">rental.schedule.order.gantt.new</field>
            <field name="model">rental.order.line</field>
            <field name="arch" type="xml">
                <ks_gantt
                        ks_task_start_date="buffer_start_time"
                        ks_task_end_date="buffer_end_time"
                        ks_task_id="id"
                        ks_task_name="name"
                        ks_gantt_config='{
                            "ks_hide_graph_overlay": "True",
                            "ks_hide_deadline": "True",
                            "ks_hide_task_reorder": "True",
                            "ks_hide_sub_task_icon": "True"
                        }'>
                </ks_gantt>
            </field>
        </record>

        <record id="action_menu_scheduled_rental_order_new" model="ir.actions.act_window">
            <field name="name">Scheduled Rentals Order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">rental.order.line</field>
            <field name="view_mode">ks_gantt</field>
            <field name="context">{'group_by': 'product_id'}</field>
            <field name="view_id" ref="view_rental_order_schedule_gantt_new"/>
        </record>

        <menuitem
                id="menu_scheduled_rental_new"
                name="Scheduled Rentals Order"
                parent="equip3_rental_operation.menu_rental_operation"
                action="action_menu_scheduled_rental_order_new"
                sequence="1"/>
    </data>
</odoo>
