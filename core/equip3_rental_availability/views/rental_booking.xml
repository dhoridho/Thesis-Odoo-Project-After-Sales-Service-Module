<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- rental.booking form view -->
        <record id="rental_booking_view_form" model="ir.ui.view">
            <field name="name">rental.booking.view.form</field>
            <field name="model">rental.booking</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                        <button string="Search" name="search_product" type="object" class="oe_highlight"/>
                        <button string="Create" name="create_rental_order" type="object" class="oe_highlight" attrs="{'invisible':[('is_search','=',False)]}"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="currency_id" invisible="1"/>
                                <field name="is_search" invisible="1"/>
                                <field name="is_create" invisible="1"/>
                                <field name="from_date"/>
                                <field name="product_ids" widget="many2many_tags"/>
                                <field name="need_recheck" invisible="1" force_save="1"/>
                            </group>
                            <group>
                                <field name="to_date"/>
                                <field name="name" invisible="1"/>
                            </group>
                        </group>
                       
                        <field name="hide_select_all" invisible="1"/>
                        <notebook attrs="{'invisible':[('is_search','=',False)]}">
                            <page name="line_ids" string="Product Details">
                                <div>
                                    <button string="Select All" name="select_all" type="object" class="oe_highlight mt-3 mb-3" attrs="{'invisible':[('hide_select_all','=',True)]}"/>
                                    <button string="Deselect All" name="deselect_all" type="object" class="oe_highlight mt-3 mb-3" attrs="{'invisible':[('hide_select_all','=',False)]}"/>
                                </div>

                                <field name="line_ids">
                                    <tree editable="bottom" delete="false">
                                        <field name="is_selected" string=" "/>
                                        <field name="lot_id"/>
                                        <field name="product_id"/>
                                        <field name="monthly_rental"/>
                                        <field name="weekly_rental"/>
                                        <field name="daily_rental"/>
                                        <field name="hourly_rental"/>
                                        <field name="currency_id" invisible="1"/>
                                    </tree>
                                </field>
                                <group>
                                    <group>
                                        <label for="initial_term"/>
                                        <div class="o_row">
                                            <field name="initial_term"/>
                                            <field name="initial_term_type"/>
                                        </div>
                                    </group>
                                    <group>
                                        <field name="total"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- rental.booking tree view -->
        <record id="rental_booking_view_tree" model="ir.ui.view">
            <field name="name">rental.booking.view.tree</field>
            <field name="model">rental.booking</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="product_ids"/>
                    <field name="from_date"/>
                    <field name="to_date"/>
                    <field name="initial_term"/>
                    <field name="initial_term_type"/>
                    <field name="total"/>
                    <field name="is_search"/>
                    <field name="is_create"/>
                </tree>
            </field>
        </record>

        <!-- rental.booking action window -->
        <record id="rental_booking_action" model="ir.actions.act_window">
            <field name="name">Rental Booking</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">rental.booking</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p><p>
                    <!-- More details about what a user can do with this object will be OK --> 
                </p>
            </field>
        </record>

        <!-- rental.booking action window -->
        <record id="create_rental_booking_action" model="ir.actions.act_window">
            <field name="name">Available Product Menu</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">rental.booking</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p><p>
                    <!-- More details about what a user can do with this object will be OK --> 
                </p>
            </field>
        </record>

        <menuitem id="menu_rental_availability" name="Product Availability"
                  parent="equip3_rental_operation.menu_rental_operation" action="create_rental_booking_action"  sequence="4" />

        <!-- This Menu Item must have a parent and an action -->
<!--        <menuitem -->
<!--            id="crete_rental_booking_menu_act" -->
<!--            name="Product Availability" -->
<!--            parent="browseinfo_rental_management.menu_rental" -->
<!--            action="create_rental_booking_action" -->
<!--            sequence="10"-->
<!--            groups="sales_team.group_sale_salesman"/>-->

        <!-- rental.order inherit form view -->
        <record id="rental_order_tree_inheritview_id" model="ir.ui.view">
            <field name="name">rental.order.inherit.view.form</field>
            <field name="model">rental.order.line</field>
            <field name="inherit_id" ref="browseinfo_rental_management.view_rental_order_line_tree"/>
            <field name="arch" type="xml">
                <field name="product_categ_id" position="after">
                    <field name="product_id" invisible="1"/>
                </field>
            </field>
        </record>
    </data>
</odoo>