<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="edit_menu_access" model="ir.ui.view">
        <field name="model">ir.ui.menu</field>
        <field name="inherit_id" ref="base.edit_menu_access"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group[1]/group[1]" position="inside">
                <field name="equip_icon_class" groups="base.group_no_one"/>
                <field name="equip_category_id" groups="base.group_no_one"/>
            </xpath>
        </field>
    </record>

    <record id="sh_push_noti_config_form" model="ir.ui.view">
        <field name="name">sh.push.noti.config.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sh_backmate_theme_adv.sh_push_noti_config_form" />
        <field name="arch" type="xml">
            <xpath expr="//i[hasclass('o_button_icon')]" position="replace">
                <a href="/sh_backmate_theme_adv/static/src/WebPushNotificationFirebaseSetup.pdf" target="_blank" style="margin-left: 5px;" class="oe_link">
                    <i class="fa fa-arrow-right"/> How to setup firebase click to download PDF file
                </a>
            </xpath>
        </field>
    </record>
</odoo>