<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-inherit="web.FieldMany2One" t-inherit-mode="extension">
        <xpath expr="//button" position="attributes">
            <attribute name="class">o-hm2-external_link btn btn-secondary o_external_button</attribute>
        </xpath>
    </t>

    <t t-name="HandleWidget">
        <span class="o_row_handle fa fa-stack ui-sortable-handle">
            <i class="fa fa-caret-down"></i>
            <i class="fa fa-caret-up"></i>
        </span>
    </t>

</templates>