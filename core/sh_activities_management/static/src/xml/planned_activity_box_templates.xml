<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-inherit="mail.ActivityBox" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o_ActivityBox')]/t[@t-if='chatter and chatter.thread']/t[@t-if='chatter.isActivityBoxVisible']" position="replace">
            <t t-if="chatter.isActivityBoxVisible">
                <div class="o_ActivityList">
                    <t t-foreach="chatter.thread.activities" t-as="activity" t-key="activity.localId">
                        <t t-if="activity.state != 'done' and activity.state !='cancel'">
                            <Activity class="o_ActivityBox_activity" activityLocalId="activity.localId"/>
                        </t>                   
                    </t>
                </div>
            </t>            
        </xpath>
    </t>
</templates>