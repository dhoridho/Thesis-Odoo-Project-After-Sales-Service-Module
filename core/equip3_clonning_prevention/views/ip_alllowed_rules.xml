<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>


        <record id="ip_allowed_rules_view_tree" model="ir.ui.view">
            <field name="name">ip.allowed.rules.view.tree</field>
            <field name="model">ip.allowed.rules</field>
            <field name="arch" type="xml">
                <tree string="IP Allowed Rules" create="0" delete="0">
                    <field name="name" />

                </tree>
            </field>
        </record>


        <record id="ip_allowed_rules_view_form" model="ir.ui.view">
            <field name="name">ip.allowed.rules.view.form</field>
            <field name="model">ip.allowed.rules</field>
            <field name="arch" type="xml">
                <form string="IP Allowed Rules" create="0" delete="0" edit="0">
                    <header>
                        <button name="action_update_ip_rules" type="object" string="Update IP Rules" class="btn-primary" />
                      
                    </header>
                    <sheet>
                        <group>
                            <group >
                                <field name="name" readonly="1" />
                                <field name="active_rules" string="Active"/>

                            </group>

                        </group>

                        <notebook >
                            <page name="ip_allowed_rules" string="IP List">
                                <field name="rule_line_ids" create="0" delete="0" edit="0">
                                    <tree editable="top">

                                        <field name="name" string="IP"/>


                                    </tree>


                                </field>

                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="ip_allowed_rules_action" model="ir.actions.act_window">
            <field name="name">IP Allowed Rules</field>
            <field name="res_model">ip.allowed.rules</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>


        <menuitem id="ip_allowed_rules_menu" 
        name="IP Allowed Rules" 
        parent="base.menu_security" 
        action="ip_allowed_rules_action" 
        groups="equip3_clonning_prevention.group_prevention"
        sequence="10"/>

    </data>



</odoo>
