<odoo>
    <data>

        <record id="update_ip_rules_wizard" model="ir.ui.view">
            <field name="name">Update IP Rules</field>
            <field name="model">update.ip.rules</field>
            <field name="arch" type="xml">
                <form string="Create Quotation">

                    <group>
                        <field name="source" widget="radio"/>
                        <field name="ip_txt_value" string="ip.txt Value" attrs="{'invisible':[('source','!=','ip_txt')]}"/>
                        <div class="text-muted" attrs="{'invisible':[('source','!=','ip_txt')]}">
                            example ['127.0.0.1','10.28.99']
                        </div>
                            
                    </group>
                    <notebook attrs="{'invisible':[('source','!=','database')]}">
                        <page string="IP">
                            <field name="ip_ids">
                                <tree editable="bottom"  >
                                    <field name="ip" />
                                </tree>

                            </field>

                        </page>

                    </notebook>
                   
                    <footer>
                        <button string="Update IP" name="update_ip"
                                type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>



    </data>
</odoo>