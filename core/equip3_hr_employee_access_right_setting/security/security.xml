<odoo>
    <data noupdate="0">



        <record id="hr.group_hr_user" model="res.groups">
            <field name="name">Self Service</field>
            <field name="category_id" ref="base.module_category_human_resources_employees"/>
            <field name="implied_ids" eval="[(6, 0, [ref('base.group_user')]),ref('base.group_private_addresses')]"/>
            <field name="comment">The user will be able to approve document created by employees.</field>
        </record>


        <record id="equip3_hr_employee_access_right_setting.group_hr_departmen_leader" model="res.groups">
            <field name="name">Department Leader</field>
            <field name="category_id" ref="base.module_category_human_resources_employees"/>
            <field name="implied_ids" eval="[(6, 0, [ref('hr.group_hr_user')])]"/>
            <field name="comment">The user will be able to approve document created by employees.</field>
        </record>
        
        <record id="equip3_hr_employee_access_right_setting.group_hr_officer" model="res.groups">
            <field name="name">HR Officer</field>
            <field name="category_id" ref="base.module_category_human_resources_employees"/>
            <field name="implied_ids" eval="[(6, 0, [ref('equip3_hr_employee_access_right_setting.group_hr_departmen_leader')])]"/>
            <field name="comment">The user will be able to approve document created by employees.</field>
        </record>

        <record id="equip3_hr_employee_access_right_setting.group_hr_manager" model="res.groups">
            <field name="name">HR Manager</field>
            <field name="category_id" ref="base.module_category_human_resources_employees"/>
            <field name="implied_ids" eval="[(6, 0, [ref('equip3_hr_employee_access_right_setting.group_hr_officer')])]"/>
            <field name="comment">The user will be able to approve document created by employees.</field>
        </record>



        <record id="hr.group_hr_manager" model="res.groups">
            <field name="name">Administrator</field>
            <field name="comment">The user will have access to the human resources configuration as well as statistic reports.</field>
            <field name="category_id" ref="base.module_category_human_resources_employees"/>
            <field name="implied_ids" eval="[(4, ref('equip3_hr_employee_access_right_setting.group_hr_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <!-- <record model="ir.ui.menu" id="hr.menu_hr_root">
            <field name="groups_id" eval="[(6,0,[ref('hr.group_hr_manager'),ref('hr.group_hr_user')])]"/>
        </record> -->

        <record id="hr_employee_self_service_rule" model="ir.rule">
            <field name="name">HR Employee Self Service</field>
            <field ref="model_hr_employee" name="model_id"/>
            <field name="domain_force">[('user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
        </record>

        <record id="hr_employee_all_rule" model="ir.rule">
            <field name="name">HR Employee All</field>
            <field ref="model_hr_employee" name="model_id"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('equip3_hr_employee_access_right_setting.group_hr_departmen_leader'))]"/>
        </record>


    </data>

</odoo>