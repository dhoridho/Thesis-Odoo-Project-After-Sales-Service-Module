<odoo>
<data>

    <record model="ir.module.category" id="equip3_hr_employee_access_right_setting.module_kiosk_attendance" >
        <field name="name">Kiosk Attendance</field>
        <field name="description">Helps you manage your Kiosk Attendance.</field>
        <field name="parent_id" ref="base.module_category_human_resources"/>
        <field name="sequence">14</field>
    </record>



    <record id="hr_attendance.group_hr_attendance_kiosk" model="res.groups">
        <field name="name">Kiosk Attendance</field>
        <field name="implied_ids" eval="[(6, 0, [ref('base.group_user')])]"/>
        <field name="category_id" ref="equip3_hr_employee_access_right_setting.module_kiosk_attendance"/>
        <field name="comment">The user will be able to open the kiosk mode and validate the employee PIN.</field>
        
    </record>


    <record id="hr_attendance.group_hr_attendance" model="res.groups">
        <field name="name">Self Service</field>
        <field name="implied_ids" eval="[(6, 0, [ref('base.group_user')])]"/>
        <field name="category_id" ref="base.module_category_human_resources_attendances"/>
        <field name="comment">The user will gain access to the human resources attendance menu, enabling him to manage his own attendance.</field>
    </record>

    <record id="hr_attendance.group_hr_attendance_user" model="res.groups">
        <field name="name">Supervisor</field>
        <field name="category_id" ref="base.module_category_human_resources_attendances"/>
        <field name="implied_ids" eval="[(4, ref('hr.group_hr_user')), (4, ref('hr_attendance.group_hr_attendance'))]"/>
    </record>


    <record id="equip3_hr_employee_access_right_setting.group_hr_attendance_hr_manager" model="res.groups">
        <field name="name">HR Manager</field>
        <field name="category_id" ref="base.module_category_human_resources_attendances"/>
        <field name="implied_ids" eval="[(4, ref('hr_attendance.group_hr_attendance_user'))]"/>
    </record>

    <record id="hr_attendance.group_hr_attendance_manager" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="base.module_category_human_resources_attendances"/>
        <field name="implied_ids" eval="[(4, ref('equip3_hr_employee_access_right_setting.group_hr_attendance_hr_manager'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>




</data>


</odoo>