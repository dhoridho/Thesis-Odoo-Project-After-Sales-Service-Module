<odoo>
<data>



    <record id="hr_expense.group_hr_expense_team_approver" model="res.groups">
        <field name="name">Self Service</field>
        <field name="category_id" ref="base.module_category_human_resources_expenses"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="equip3_hr_employee_access_right_setting.group_team_approver" model="res.groups">
        <field name="name">Supervisor</field>
        <field name="category_id" ref="base.module_category_human_resources_expenses"/>
        <field name="implied_ids" eval="[(4, ref('hr_expense.group_hr_expense_team_approver'))]"/>
    </record>

    <record id="hr_expense.group_hr_expense_user" model="res.groups">
        <field name="name">HR Manager</field>
        <field name="category_id" ref="base.module_category_human_resources_expenses"/>
        <field name="implied_ids" eval="[(4, ref('equip3_hr_employee_access_right_setting.group_team_approver'))]"/>
    </record>

    <record id="hr_expense.group_hr_expense_manager" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="base.module_category_human_resources_expenses"/>
        <field name="implied_ids" eval="[(4, ref('hr_expense.group_hr_expense_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

 
    

</data>



</odoo>