<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

       

        <record id="equip3_hr_employee_permission_hr_employee_km_workform_inherit" model="ir.ui.view">
            <field name="name">equip3_hr_employee_permission.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="attributes">
                    <attribute name="groups">hr.group_hr_manager</attribute>
                </xpath>

                <xpath expr="//field[@name='parent_id']" position="attributes">
                    <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True}</attribute>
                </xpath>

                <xpath expr="//field[@name='coach_id']" position="attributes">
                    <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True}</attribute>
                </xpath>

                
                <xpath expr="//field[@name='address_id']" position="attributes">
                    <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True}</attribute>
                </xpath>
               
                <xpath expr="//field[@name='resource_calendar_id']" position="attributes">
                    <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True}</attribute>
                </xpath>
              


               


            </field>
        </record>

        


    </data>
</odoo>