<odoo>

    <record id="view_account_config_settings_inherited_view" model="ir.ui.view">
        <field name="name">view.account.config.settings.inherited.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="bank_cash" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_sg_bank_reconcile"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_sg_bank_reconcile" string="Bank Reconcile"/>
                        <div class="text-muted">
                            Manage Bank Reconcilation and Bank Statements
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>
