<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="delivery_boy_log_tree_view" model="ir.ui.view">
        <field name="name">delivery.boy.log.tree.view</field>
        <field name="model">delivery.boy.log</field>
        <field name="arch" type="xml">
            <tree>
                <field name="driver_id"/>
                <field name="date"/>
                <field name="check_in"/>
                <field name="check_out"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="delivery_boy_log_form_view" model="ir.ui.view">
        <field name="name">delivery.boy.log.form.view</field>
        <field name="model">delivery.boy.log</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="check_in_driver" type="object" string="Check in"/>
                    <button name="check_out_driver" type="object" string="Check Out"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="driver_id" invisible="1"/>
                            <field name="date" invisible="1"/>
                        </group>
                    </group>
                    <field name="log_fetch_ids">
                        <tree editable="log_ids">
                            <field name="driver_id"/>
                            <field name="date"/>
                            <field name="check_in"/>
                            <field name="check_out"/>
                            <field name="working_hour"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="delivery_boy_log_kanban_view" model="ir.ui.view">
        <field name="name">delivery.boy.log.kanban.view</field>
        <field name="model">delivery.boy.log</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" create="false">
                <field name="driver_id"/>
                <field name="date"/>
                <field name="check_in"/>
                <field name="check_out"/>
                <field name="login" invisible="1"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="row mb4">
                                <div class="col-8">
                                    <span>
                                        <strong>
                                            <field name="driver_id"/>
                                        </strong>
                                    </span>
                                </div>
                            </div>
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="text-success float-left mb4" t-if="record.driver_id.raw_value">
                                        <i class="fa fa-circle" role="img" aria-label="ok" title="ok" style="color:green;"></i>
                                    </li>
                                    <li>
                                        <field name="country_id"/>
                                    </li>
                                    <li>
                                        <field name="login"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="delivery_boy_log_action" model="ir.actions.act_window">
        <field name="name">Delivery Boy Log</field>
        <field name="res_model">delivery.boy.log</field>
        <field name="view_mode">kanban,form</field>
    </record>

    <menuitem id="delivery_boy_log_menu" action="delivery_boy_log_action" name="Delivery Boy Log" sequence="4" parent="delivery_cash_wallet.delivery_boy_main_menu" />

    <record id="delivery_boy_status_tree_view" model="ir.ui.view">
        <field name="name">delivery.boy.status.tree.view</field>
        <field name="model">delivery.boy.status</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="driver_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="delivery_boy_status_action" model="ir.actions.act_window">
        <field name="name">Delivery Boy Status</field>
        <field name="res_model">delivery.boy.status</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="delivery_boy_status_menu" action="delivery_boy_status_action" name="Delivery Boy Status" sequence="5" parent="delivery_cash_wallet.delivery_boy_main_menu" />
</odoo>