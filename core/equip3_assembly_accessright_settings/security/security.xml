<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.module.category" id="module_assembly_parent">
        <field name="name">Assembly</field>
        <field name="sequence">99</field>
    </record>

    <record model="ir.module.category" id="module_assembly">
        <field name="name">Assembly</field>
        <field name="parent_id" ref="module_assembly_parent"/>
    </record>

    <record id="group_assembly_labor" model="res.groups">
        <field name="name">Labor</field>
        <field name="category_id" ref="module_assembly"/>
        <field name="implied_ids" eval="[(6, 0, [])]"/>
    </record>

    <record id="group_assembly_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_assembly"/>
        <field name="implied_ids" eval="[(6, 0, [ref('group_assembly_labor')])]"/>
    </record>

    <record id="group_assembly_administrator" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="module_assembly"/>
        <field name="implied_ids" eval="[(6, 0, [ref('group_assembly_manager')])]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

</odoo>