<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="mrp_workcenter_view_iot" model="ir.ui.view">
        <field name="name">mrp.workcenter.view.iot</field>
        <field name="model">mrp.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_workcenter_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Sensor Devices" name="device" invisible="1">
                    <group>
                        <group>
                            <field name="device_id" options="{'no_create': 1, 'no_create_edit': 1}"/>
                            <label for="height_device" string="Height"/>
                            <div class="o_row">
                                <field name="height_device" class="mr-2"/>
                                <field name="device_uom_id" string="UoM" options="{'no_create': 1, 'no_create_edit': 1}"/>
                            </div>
                            <field name="device_ids" widget="many2many_tags" options="{'no_create': 1, 'no_create_edit': 1}"/>
                            <label for="width_device" string="Width"/>
                            <div class="o_row">
                                <field name="width_device" class="mr-2"/>
                                <field name="device_uom_id" string="UoM" options="{'no_create': 1, 'no_create_edit': 1}"/>
                            </div>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>