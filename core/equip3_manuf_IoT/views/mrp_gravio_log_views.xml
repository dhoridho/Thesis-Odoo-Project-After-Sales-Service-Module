<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_mrp_gravio_log_tree" model="ir.ui.view">
        <field name="name">view.mrp.gravio.log.tree</field>
        <field name="model">mrp.gravio.log</field>
        <field name="arch" type="xml">
            <tree string="Gravio Log" create="0" delete="0" edit="0" default_order="timestamp desc" expand="True">
                <field name="record_id" optional="hide"/>
                <field name="area_id"/>
                <field name="area_name"/>
                <field name="kind_id"/>
                <field name="kind_name"/>
                <field name="layer_id"/>
                <field name="layer_name"/>
                <field name="physical_device_id"/>
                <field name="physical_device_name"/>
                <field name="virtual_device_id"/>
                <field name="data_id"/>
                <field name="data_data" optional="hide"/>
                <field name="data_uom_id" optional="hide"/>
                <field name="data_data_uom"/>
                <field name="record_uom_id"/>
                <field name="data_type"/>
                <field name="timestamp"/>
            </tree>
        </field>
    </record>

    <record id="view_mrp_gravio_log_form" model="ir.ui.view">
        <field name="name">view.mrp.gravio.log.form</field>
        <field name="model">mrp.gravio.log</field>
        <field name="arch" type="xml">
            <form string="Gravio Log" create="0" delete="0" edit="0">
                <sheet>
                    <group>
                        <group>
                            <field name="area_id"/>
                            <field name="area_name"/>
                            <field name="kind_id"/>
                            <field name="kind_name"/>
                            <field name="layer_id"/>
                            <field name="layer_name"/>
                            <field name="physical_device_id"/>
                            <field name="physical_device_name"/>
                            <field name="virtual_device_id"/>
                        </group>
                        <group>
                            <field name="timestamp"/>
                            <field name="data_id"/>
                            <label for="data_data"/>
                            <div class="o_row">
                                <field name="data_data" class="mr-2"/>
                                <field name="data_uom_id"/>
                            </div>
                            <label for="data_data_uom"/>
                            <div class="o_row">
                                <field name="data_data_uom" class="mr-2"/>
                                <field name="record_uom_id"/>
                            </div>
                            <field name="data_type"/>
                            <field name="json_data"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_mrp_gravio_log_search" model="ir.ui.view">
        <field name="name">view.mrp.gravio.log.search</field>
        <field name="model">mrp.gravio.log</field>
        <field name="arch" type="xml">
            <search string="Gravio Log">
                <field name="record_id"/>

                <group expand="0" string="Group By...">
                    <filter name="groupby_record_id" string="Record" domain="[]" context="{'group_by': 'record_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_view_mrp_gravio_log" model="ir.actions.act_window">
        <field name="name">Gravio Log</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.gravio.log</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_groupby_record_id': 1}</field>
        <field name="help" type="html">
			<p class="o_view_nocontent_empty_folder">
				No data to display
			</p>
		</field>
    </record>

</odoo>