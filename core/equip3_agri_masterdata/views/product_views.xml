<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_only_form_view_inherited_agri" model="ir.ui.view">
        <field name="name">product.template.product.form.inherited.agri</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Agriculture">
                    <group>
                        <group>
                            <field name="is_agriculture_product"/>
                            <field name="agri_product_type" attrs="{'invisible': [('is_agriculture_product', '=', False)],'required': [('is_agriculture_product', '!=', False)]}"/>
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>

    <record id="product_normal_form_view" model="ir.ui.view">
		<field name="name">product.normal.form.view</field>
		<field name="model">product.product</field>
		<field name="inherit_id" ref="product.product_normal_form_view"/>
		<field name="arch" type="xml">
			<notebook position="inside">
                <page string="Agriculture">
                    <group>
                        <group>
                            <field name="is_agriculture_product"/>
                            <field name="agri_product_type" attrs="{'invisible': [('is_agriculture_product', '=', False)],'required': [('is_agriculture_product', '!=', False)]}"/>
                        </group>
                    </group>
                </page>
            </notebook>
		</field>
    </record>
</odoo>