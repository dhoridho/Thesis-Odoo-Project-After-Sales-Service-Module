<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.agriculture</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="99"/>
        <field name="inherit_id" ref="equip3_agri_accessright_settings.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='equip3_agri_accessright_settings']" position="inside">
                <h2>General</h2>
                <div class="row mt16 o_settings_container" name="agriculture_general_settings">
                    <div class="col-12 col-lg-6 o_setting_box" id="div_crop_default_uom_id">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="mt16">
                                    <label for="crop_default_uom_id" string="Area Unit of Measure"/>
                                    <field name="crop_default_uom_id" class="oe_inline" attrs="{'required': [('agriculture', '=', True)]}" options="{'no_create': 1, 'no_create_edit': 1, 'no_open': 1}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    
</odoo>
