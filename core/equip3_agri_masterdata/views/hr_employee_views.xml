<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_employee_tree_worker" model="ir.ui.view">
        <field name="name">view.employee.tree.worker</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree"/>
        <field name="mode">primary</field>
        <field name="priority" eval="1000"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="is_agri_worker" widget="boolean_toggle"/>
            </xpath>
        </field>
    </record>

    <record id="view_employee_form_worker" model="ir.ui.view">
        <field name="name">view.employee.form.worker</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="mode">primary</field>
        <field name="priority" eval="1000"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="agriculture" string="Agriculture">
                    <group>
                        <group>
                            <field name="is_agri_worker"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="action_view_agri_worker" model="ir.actions.act_window">
        <field name="name">Worker</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_ids" eval="[(5,),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('hr.hr_kanban_view_employees')}),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('equip3_agri_masterdata.view_employee_tree_worker')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('equip3_agri_masterdata.view_employee_form_worker')}),
        ]"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
           Create a new Worker
          </p>
        </field>
    </record>

</odoo>