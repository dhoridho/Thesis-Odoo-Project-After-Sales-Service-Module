<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_agriculture_crop_mgmt_tree" model="ir.ui.view">
        <field name="name">agriculture.crop.mgmt.tree</field>
        <field name="model">agriculture.crop</field>
        <field name="arch" type="xml">
            <tree string="Crop" create="false" delete="false" edit="false" expand="1">
                <field name="crop"/>
                <field name="block_id"/>
                <field name="crop_count"/>
                <field name="uom_id"/>
                <field name="crop_date"/>
                <field name="crop_phase"/>
                <field name="origin" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="view_agriculture_crop_mgmt_form" model="ir.ui.view">
        <field name="name">agriculture.crop.mgmt.form</field>
        <field name="model">agriculture.crop</field>
        <field name="arch" type="xml">
            <form string='Crop' create="false" delete="false" edit="false">
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar"/>
                    <group>
                        <group>
                            <field name="crop"/>
                            <field name="block_id"/>
                            <label for="crop_count"/>
                            <div class="o_row">
                                <field name="crop_count" class="oe_inline mr-8"/>
                                <field name="uom_id" class="oe_inline"/>
                            </div>
                        </group>
                        <group>
                            <field name="crop_date"/>
                            <field name="crop_phase"/>
                            <field name="crop_age"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_agriculture_crop_mgmt_search" model="ir.ui.view">
        <field name="name">agriculture.crop.mgmt.search</field>
        <field name="model">agriculture.crop</field>
        <field name="arch" type="xml">
            <search string="Crop">
                <field name="crop"/>
                <field name="block_id"/>

                <group string="Group By...">
                    <filter name="groupby_crop" domain="[]" context="{'group_by': 'crop'}"/>
                    <filter name="groupby_block_id" domain="[]" context="{'group_by': 'block_id'}"/>
                </group>

                <searchpanel>
                    <field name="crop"/>
                    <field name="block_id"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="action_agriculture_crop_mgmt" model="ir.actions.act_window">
        <field name="name">Crop</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">agriculture.crop</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_groupby_block_id': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to create new crop.
            </p>
        </field>
    </record>

</odoo>