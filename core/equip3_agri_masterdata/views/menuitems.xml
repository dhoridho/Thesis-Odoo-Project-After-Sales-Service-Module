<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <menuitem id="agriculture_master_data"
			  name="Master Data"
			  parent="equip3_agri_accessright_settings.menu_agriculture_root"
			  sequence="60">

		<menuitem id="menu_agriculture_products"
				  name="Products"
				  action="product.product_template_action"
				  sequence="10"/>

		<menuitem id="menu_agriculture_product_variants"
				  name="Product Variants"
				  action="product.product_normal_action"
				  groups="product.group_product_variant"
				  sequence="20"/>

		<menuitem id="menu_agriculture_traceability"
				  name="Lots/Serial Numbers"
				  action="stock.action_production_lot_form"
				  groups="stock.group_production_lot"
				  sequence="30"/>
	</menuitem>

    <menuitem id="agriculture_area_menu"
			  name="Area"
			  parent="equip3_agri_accessright_settings.menu_agriculture_root"
			  sequence="90">
				
		<menuitem id="menu_crop_estate_config"
				  name="Estate"
				  action="action_crop_estate_config"
				  sequence="10"/>

		<menuitem id="menu_agriculture_division"
				  name="Division"
				  action="action_view_agriculture_division"
				  sequence="20"/>

		<menuitem id="menu_crop_block_config"
				  name="Block"
				  action="action_crop_block_config"
				  sequence="30"/>

		<menuitem id="menu_nursery_area_config"
				  name="Nursery Area"
				  action="action_nursery_area_config"
				  sequence="40"/>
	</menuitem>

    <!-- Configuration Menu -->
	<menuitem id="menu_agriculture_crop_mgmt"
        name="Crop"
        action="action_agriculture_crop_mgmt"
        parent="equip3_agri_accessright_settings.agri_configuration_menu"
        sequence="50"/>

    <menuitem id="menu_crop_phase_config"
        name="Crop Phase"
        action="action_crop_phase_config"
        parent="equip3_agri_accessright_settings.agri_configuration_menu"
        sequence="60"/>

    <menuitem id="menu_crop_activity_group_config"
        name="Activity Group"
        action="action_crop_activity_group_config"
        parent="equip3_agri_accessright_settings.agri_configuration_menu"
        sequence="70"/>

    <menuitem id="menu_crop_activity_config"
        name="Activity"
        action="action_crop_activity_config"
        parent="equip3_agri_accessright_settings.agri_configuration_menu"
        sequence="80"/>

	<menuitem id="menu_agriculture_worker"
        name="Worker"
        action="action_view_agri_worker"
        parent="equip3_agri_accessright_settings.agri_configuration_menu"
        sequence="85"/>

    <menuitem id="menu_agriculture_worker_group"
        name="Worker Group"
        action="action_view_agriculture_worker_group"
        parent="equip3_agri_accessright_settings.agri_configuration_menu"
        sequence="90"/>

    <!-- Menu Icons -->
	<record id="agriculture_master_data" model= "ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-parent-agriculture-master-data-alternatif</field>
    </record>

	<record id="agriculture_area_menu" model= "ir.ui.menu">
		<field name="equip_icon_class">o-hm-sidebar-parent-agriculture-area</field>
	</record>

</odoo>