<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="crop_activity_type_planting" model="crop.activity.type">
        <field name="name">Planting</field>
        <field name="value">planting</field>
        <field name="category_ids" eval="[(6, 0, [
            ref('equip3_agri_masterdata.crop_activity_category_nursery'),
            ref('equip3_agri_masterdata.crop_activity_category_plantation'),
        ])]"/>
    </record>

    <record id="crop_activity_type_maintenance" model="crop.activity.type">
        <field name="name">Maintenance</field>
        <field name="value">maintenance</field>
        <field name="category_ids" eval="[(6, 0, [
            ref('equip3_agri_masterdata.crop_activity_category_land_clearing'),
            ref('equip3_agri_masterdata.crop_activity_category_nursery'),
            ref('equip3_agri_masterdata.crop_activity_category_plantation'),
            ref('equip3_agri_masterdata.crop_activity_category_other_activity'),
        ])]"/>
    </record>

    <record id="crop_activity_type_crop_adjustment" model="crop.activity.type">
        <field name="name">Crop Adjustment</field>
        <field name="value">crop_adjustment</field>
        <field name="category_ids" eval="[(6, 0, [
            ref('equip3_agri_masterdata.crop_activity_category_nursery'),
            ref('equip3_agri_masterdata.crop_activity_category_plantation'),
        ])]"/>
    </record>

    <record id="crop_activity_type_crop_transfer" model="crop.activity.type">
        <field name="name">Transfer</field>
        <field name="value">transfer</field>
        <field name="category_ids" eval="[(6, 0, [
            ref('equip3_agri_masterdata.crop_activity_category_land_clearing'),
            ref('equip3_agri_masterdata.crop_activity_category_nursery'),
            ref('equip3_agri_masterdata.crop_activity_category_plantation'),
            ref('equip3_agri_masterdata.crop_activity_category_harvesting'),
        ])]"/>
    </record>

    <record id="crop_activity_type_crop_harvest" model="crop.activity.type">
        <field name="name">Harvest</field>
        <field name="value">harvest</field>
        <field name="category_ids" eval="[(6, 0, [
            ref('equip3_agri_masterdata.crop_activity_category_harvesting'),
        ])]"/>
    </record>

</odoo>