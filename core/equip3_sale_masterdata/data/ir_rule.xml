<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record model="ir.rule" id="sales_team.sale_team_comp_rule">
            <field name="name">Sales Team multi-company</field>
            <field name="model_id" ref="sales_team.model_crm_team"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>
        <record model="ir.rule" id="customer_contract_rule">
            <field name="name">Sale Masterdata customer category</field>
            <field name="model_id" ref="equip3_sale_masterdata.model_customer_category"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>
        <record model="ir.rule" id="base.res_partner_rule">
            <field name="domain_force">['|', '|', ('partner_share', '=', False), ('company_id', 'in', user.company_ids.ids), ('company_id', '=', False)]</field>
        </record>
    </data>
</odoo>