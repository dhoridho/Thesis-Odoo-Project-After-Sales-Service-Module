<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="assets_backend" name="customer_degree_trust assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" href="/equip3_sale_masterdata/static/src/scss/customer_degree_trust.scss"/>  
        </xpath>
    </template>

    <record id="customer_degree_trust_view_form" model="ir.ui.view">
        <field name="name">customer.degree.trust.form</field>
        <field name="model">customer.degree.trust</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="overdue_day"/>
                            <field name="no_of_overdue_invoices"/>
                            <field name="index" force_save="1" readonly="1"/>
                            <field name="company_id" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="customer_degree_trust_view_tree" model="ir.ui.view">
        <field name="name">customer.degree.trust.tree</field>
        <field name="model">customer.degree.trust</field>
        <field name="arch" type="xml">
            <tree class ="o_customer_degree_trust">
                <field name="name" />
                <field name="overdue_day"/>
                <field name="no_of_overdue_invoices"/>
                <field name="index" />
            </tree>
        </field>
    </record>

    <record id="action_customer_degree_trust" model="ir.actions.act_window">
        <field name="name">Degree Of Trust</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">customer.degree.trust</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('company_id', '=', allowed_company_ids[0])]</field>
        <field name="help" type="html">
          <p class="oe_views_nocontent_create">    
           Click to add a new Customer Degree Trust.
          </p>
        </field>
   </record>

    <menuitem id="menu_sale_config_config"
              name="Configuration"
              parent="sale.menu_sale_config"
              sequence="1"
              groups="sales_team.group_sale_manager"/>

 <!-- Change parent="sale.menu_sale_config"  sequence="3" -->
  <menuitem name="Customer"
    id="menu_confi_customer"
    parent="menu_sale_config_config"
    sequence="5"/>
 
  <menuitem name="Degree Of Trust"
    id="menu_customer_degree_trust"
    parent="menu_confi_customer"
    action="action_customer_degree_trust"
    sequence="1"/>
        

</odoo>
