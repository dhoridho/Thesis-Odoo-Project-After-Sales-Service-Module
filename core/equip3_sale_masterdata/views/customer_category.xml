<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="customer_category_view_form" model="ir.ui.view">
        <field name="name">customer.category.form</field>
        <field name="model">customer.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="customer_category_view_tree" model="ir.ui.view">
        <field name="name">customer.category.tree</field>
        <field name="model">customer.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_customer_category" model="ir.actions.act_window">
        <field name="name">Customer Category</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">customer.category</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_views_nocontent_create">    
           Click to add a new Customer Category.
          </p>
        </field>
   </record>
 
  <menuitem name="Customer Category"
    id="menu_customer_category"
    parent="menu_confi_customer"
    action="action_customer_category"
    sequence="2"/>
        

</odoo>
