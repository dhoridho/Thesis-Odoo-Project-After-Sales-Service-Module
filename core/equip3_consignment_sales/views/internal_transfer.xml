<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_form_internal_transfer_consignment_sale" model="ir.ui.view">
            <field name="name">internal.transfer.consignment.sale.form</field>
            <field name="model">internal.transfer</field>
            <field name="inherit_id" ref="equip3_inventory_operation.view_form_internal_transfer"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='branch_id']" position="after">
                    <field name="sale_consignment_id" invisible="1"/>
                    <field name="is_transfer_back_consignment" invisible="1" force_save="1" readonly="1"/>
                </xpath>
                <xpath expr="//field[@name='source_warehouse_id']" position="attributes">
                    <attribute name="attrs">{'readonly': ['|', ('state', '!=', 'draft'), ('sale_consignment_id', '!=', False), ('is_transfer_back_consignment', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='source_location_id']" position="attributes">
                    <attribute name="attrs">{'readonly': ['|', ('state', '!=', 'draft'), ('sale_consignment_id', '!=', False), ('is_transfer_back_consignment', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='destination_warehouse_id']" position="attributes">
                    <attribute name="attrs">{'readonly': ['|', ('state', '!=', 'draft'), ('sale_consignment_id', '!=', False), ('is_transfer_back_consignment', '=', False)]}</attribute>
                    <attribute name="force_save">1</attribute>
                </xpath>
                <xpath expr="//field[@name='destination_location_id']" position="attributes">
                    <attribute name="attrs">{'readonly': ['|', ('state', '!=', 'draft'), ('sale_consignment_id', '!=', False), ('is_transfer_back_consignment', '=', False)]}</attribute>
                    <attribute name="force_save">1</attribute>
                </xpath>
                <xpath expr="//group[@name='group_1']//div[1]" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', ('is_source_loc','!=',True), ('is_transfer_back_consignment', '!=', False)]}</attribute>
                </xpath>
                <xpath expr="//group[@name='group_1']//div[2]" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', '&amp;',('is_destination_loc','!=',True), ('sale_consignment_id', '!=', False), ('is_transfer_back_consignment', '=', False)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='product_line_ids']/tree/field[@name='description']" position="attributes">
                    <attribute name="attrs">{'readonly': [('parent.is_transfer_back_consignment', '=', True)]}</attribute>
                    <attribute name="force_save">1</attribute>
                </xpath>
                <xpath expr="//field[@name='product_line_ids']/tree/field[@name='analytic_account_group_ids']" position="attributes">
                    <attribute name="attrs">{'readonly': [('parent.is_transfer_back_consignment', '=', True)]}</attribute>
                    <attribute name="force_save">1</attribute>
                </xpath>
                <xpath expr="//field[@name='product_line_ids']/tree/field[@name='uom']" position="attributes">
                    <attribute name="attrs">{'readonly': [('parent.is_transfer_back_consignment', '=', True)]}</attribute>
                    <attribute name="force_save">1</attribute>
                </xpath>
                <xpath expr="//field[@name='product_line_ids']/tree/field[@name='current_qty']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='product_line_ids']/tree/field[@name='current_qty']" position="after">
                    <field name="current_qty_consignment"/>
                </xpath>
                <xpath expr="//field[@name='product_line_ids']/tree/field[@name='source_location_id']" position="attributes">
                    <attribute name="attrs">{'readonly': [('parent.is_transfer_back_consignment', '=', True)]}</attribute>
                    <attribute name="force_save">1</attribute>
                </xpath>
                <xpath expr="//field[@name='product_line_ids']/tree/field[@name='destination_location_id']" position="attributes">
                    <attribute name="attrs">{'readonly': [('parent.is_transfer_back_consignment', '=', True)]}</attribute>
                    <attribute name="force_save">1</attribute>
                </xpath>
                <xpath expr="//field[@name='product_line_ids']/tree/field[@name='scheduled_date']" position="attributes">
                    <attribute name="attrs">{'readonly': [('parent.is_transfer_back_consignment', '=', True)]}</attribute>
                    <attribute name="force_save">1</attribute>
                </xpath>
                <xpath expr="//field[@name='product_line_ids']/tree/field[@name='product_id']" position="after">
                    <field name="product_consignment_id" domain="product_id_domain" attrs="{'column_invisible':[('parent.sale_consignment_id', '=', False)], 'required': [('parent.sale_consignment_id', '!=', False)], 'readonly': [('parent.is_transfer_back_consignment', '!=', False)]}" force_save="1"/>
                    <field name="product_id_domain" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='product_line_ids']/tree/field[@name='product_id']" position="attributes">
                    <attribute name="attrs">{'column_invisible': [('parent.sale_consignment_id', '!=', False)]}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
