<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_sale_settings_view" model="ir.ui.view">
            <field name="name">res.config.settings.inherit.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="equip3_sale_accessright_setting.res_config_settings_views_forms" />
            <field name="arch" type="xml">
    			<xpath expr="//field[@name='is_customer_limit_matrix']/../../../../.." position="after">
                    <div class="row mt16 o_settings_container" attrs="{'invisible': [('sales', '=', False)]}">
                        <div class="row mt16 o_settings_container" id="consignment_sales">
                            <div class="o_setting_box" attrs="{'invisible': [('sales', '=', False)]}">
                                <div class="o_setting_left_pane">
                                    <field name="is_consignment_sales"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="is_consignment_sales"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>