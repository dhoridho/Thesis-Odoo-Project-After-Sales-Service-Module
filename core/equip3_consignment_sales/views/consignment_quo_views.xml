    <record id="sale_order_form_view_inherit_consignment_quo" model="ir.ui.view">
        <field name="name">sale.orer.form.view.inherit.consignment</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="equip3_sale_purchase.view_order_form_inherit"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='branch_id']" position="attributes">
                <attribute name="force_save">1</attribute>
                <attribute name="attrs">{'readonly' : True} </attribute>
            </xpath>
            <xpath expr="//field[@name='warehouse_new_id']" position="attributes">
                <attribute name="attrs">{'readonly' : True} </attribute>
            </xpath>
            <xpath expr="//div[@name='destination_warehouse']" position="attributes">
                <attribute name="class"> d-none</attribute>
            </xpath>
            <xpath expr="//div[@name='is_dropship']" position="attributes">
                <attribute name="class"> d-none</attribute>
            </xpath>
            <xpath expr="//label[@for='is_dropship']" position="attributes">
                <attribute name="class"> d-none</attribute>
            </xpath>
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="sale_consignment_id" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_template_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_template_id']" position="after">
                <field name="product_consignment_id_domain" invisible="1"/>
                <field name="product_tmpl_consignment_id" domain="product_consignment_id_domain" attrs="{'readonly': ['&amp;',('state', 'in', ['sale','quotation_approved']), ('parent.lock_sale_order','=',True)], 'required': [('display_type', 'not in', ('line_section', 'line_note'))]}"/>
            </xpath>
        </field>
    </record>

</odoo>
