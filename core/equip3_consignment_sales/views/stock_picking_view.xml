<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- stock.picking inherit form view -->
        <record id="stock_picking_consignment_sales_view" model="ir.ui.view">
            <field name="name">stock.picking.inherit.view.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="sale_consignment_id" force_save="1" readonly="1" invisible="1"/>
                </xpath>
                <xpath expr="//page[@name='operations']/field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="attributes">
                    <attribute name="attrs">{'readonly': ['|', '&amp;', ('state', '!=', 'draft'), ('additional', '=', False), ('has_move_lines', '=', True)], 'column_invisible':[('parent.sale_consignment_id', '!=', False)]}</attribute>
                </xpath>
                <xpath expr="//page[@name='operations']/field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="after">
                    <field name="additional" invisible="1"/>
                    <field name="product_consignment_id" domain="product_consignment_id_domain" attrs="{'column_invisible':[('parent.sale_consignment_id', '=', False)], 'required': [('parent.sale_consignment_id', '!=', False)]}"/>
                    <field name="product_consignment_id_domain" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
