<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="consignment_stock_pivot_view" model="ir.ui.view">
        <field name="name">Consignment Stock</field>
        <field name="model">consignment.stock</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="warehouse_id" invisible="1"/>
                <field name="location_id" type="row"/>
                <field name="product_id" type="row"/>
                <field name="quantity" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="consignment_stock_list_view" model="ir.ui.view">
        <field name="name">Consignment Stock</field>
        <field name="model">consignment.stock</field>
        <field name="arch" type="xml">
            <tree create="0">
                <field name="warehouse_id" invisible="1"/>
                <field name="location_id" />
                <field name="product_id" />
                <field name="quantity" />
            </tree>
        </field>
    </record>

    <record id="consignment_stock_graph_view" model="ir.ui.view">
        <field name="name">Consignment Stock</field>
        <field name="model">consignment.stock</field>
        <field name="arch" type="xml">
            <graph>
                <field name="warehouse_id" invisible="1"/>
                <field name="location_id" type="row"/>
                <field name="product_id" type="row"/>
                <field name="quantity" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="consignment_stock_view_action" model="ir.actions.act_window">
        <field name="name">Consignment Stock</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">consignment.stock</field>
        <field name="view_mode">pivot,list,graph</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create your first
            </p>

        </field>
    </record>

    <menuitem
			id="consignment_report_header"
			name="Consignment Report"
            sequence="7"
			parent="sale.menu_sale_report"/>

    <menuitem
        id="consignment_stock_menu"
        name="Consignment Stock"
        action="consignment_stock_view_action"
        parent="equip3_consignment_sales.consignment_report_header"
        sequence="1"/>

</odoo>
