<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="consignment_analysis_pivot_view" model="ir.ui.view">
        <field name="name">Consignment Analysis</field>
        <field name="model">consignment.analysis</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="product_id" type="row" />
                <field name="partner_id" type="row" />
                <!-- <field name="sale_id" type="row" /> -->
                <field name="amount_total" invisible="1" />
                <field name="stock_sold" type="measure" />
                <field name="so_count" type="measure" />
                <field name="date_order" type="col"/>
            </pivot>
        </field>
    </record>

    <record id="consignment_analysis_graph_view" model="ir.ui.view">
        <field name="name">Consignment Analysis</field>
        <field name="model">consignment.analysis</field>
        <field name="arch" type="xml">
            <graph>
                <field name="date_order" type="row" interval="month"/>
                <field name="product_id" />
                <field name="partner_id" />
                <field name="sale_id" />
                <!-- <field name="amount_total" type="measure" /> -->
                <field name="qty" type="measure" />
            </graph>
        </field>
    </record>

    <record id="consignment_analysis_view_action" model="ir.actions.act_window">
        <field name="name">Consignment Analysis</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">consignment.analysis</field>
        <field name="view_mode">pivot,graph</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create your first
            </p>

        </field>
    </record>

    <menuitem
        id="consignment_analysis_menu"
        name="Consignment Analysis"
        action="consignment_analysis_view_action"
        parent="equip3_consignment_sales.consignment_report_header"
        sequence="2"/>

</odoo>
