<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- update old partner company and branch cron -->
        <!-- this cron is only run once and must be run manually to update old partners -->
        <record id="update_old_partner_company_and_branch_cron" forcecreate="True" model="ir.cron">
            <field name="name">Update Old Partner Company and Branch</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="doall" eval="False"/>
            <field name="active" eval="False"/>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="model_res_partner"/>
            <field name="state">code</field>
            <field name="code">model.update_partner_company_and_branch()</field>
            <field name="priority" eval="5" />
        </record>
    </data>
</odoo>