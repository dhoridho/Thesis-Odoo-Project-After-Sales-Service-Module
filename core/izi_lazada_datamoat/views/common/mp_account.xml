<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="0">
    <record id="form_mp_account" model="ir.ui.view">
      <field name="name">Marketplacle Account Form View</field>
      <field name="model">mp.account</field>
      <field name="inherit_id" ref="izi_lazada.form_mp_account"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='marketplace']" position="after">
          <field name="lz_datamoat_active" invisible="1"/>
          <field name="lz_datamoat_show_toggle" invisible="1"/>
        </xpath>
        <xpath expr="//button[@name='action_reauth']" position="after">
          <button name="lazada_datamoat_toggle" string="Enable Lazada Datamoat" type="object" attrs="{'invisible': [
                    '|', ('lz_datamoat_show_toggle', '=', False), ('lz_datamoat_active', '=', True)]}"/>
          <button name="lazada_datamoat_toggle" string="Disable Lazada Datamoat" type="object" attrs="{'invisible': [
                    '|', ('lz_datamoat_show_toggle', '=', False), ('lz_datamoat_active', '=', False)]}"/>
        </xpath>
      </field>
    </record>
  </data>
</odoo>