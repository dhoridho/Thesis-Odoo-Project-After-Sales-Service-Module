<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="lazop_datamoat_totp_form" inherit_id="auth_totp.auth_totp_form" primary="True">
    <xpath expr="//input[@id='switch-remember']/.." position="attributes">
      <attribute name="class" separator=" " add="d-none"/>
    </xpath>
    <xpath expr="//i[contains(@class, 'fa-mobile')]/.." position="attributes">
      <attribute name="class" separator=" " add="d-none"/>
    </xpath>
    <xpath expr="//button[@type='submit']" position="after">
      <a id="totp_ask" class="btn btn-secondary btn-block text-white">
        <i class="fa fa-envelope"/>
        Send me code
      </a>
    </xpath>
  </template>


</odoo>