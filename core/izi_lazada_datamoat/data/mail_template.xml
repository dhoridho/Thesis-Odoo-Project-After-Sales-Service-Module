<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="1">
    <record id="mail_tmpl_datamoat_totp" model="mail.template">
      <field name="name">Lazop Datamoat: Authentication Code to Login</field>
      <field name="model_id" ref="base.model_res_users"/>
      <field name="email_from">${object.company_id.partner_id.email_formatted | safe}</field>
      <field name="email_to">${object.partner_id.email_formatted | safe}</field>
      <field name="reply_to">${object.company_id.partner_id.email_formatted | safe}</field>
      <field name="subject">Authentication Code to Login to ${object.company_id.name}</field>
      <field name="body_html" type="html">
        <p>This is body of email, please replace or customize it before use.</p>
        <p>This is one time password is
          <strong>${ctx.get('otp')}</strong>
        </p>
        <p>It will expired after 30 seconds.</p>
      </field>
      <field name="auto_delete" eval="False"/>
    </record>
  </data>
</odoo>