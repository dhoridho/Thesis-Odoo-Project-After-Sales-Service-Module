<odoo>
    <data>



        <record model="ir.module.category" id="module_recruitment_category">
            <field name="name">Recruitment Access</field>
            <field name="sequence">3</field>
            <field name="visible" eval="0" />
        </record>


        <record id="equip3_hr_accessright_settings.equip3_group_hr_recruitment_applicant_salary" model="res.groups">
            <field name="name">Show applicant salary</field>
            <field name="category_id" ref="equip3_hr_accessright_settings.module_recruitment_category"/>
        </record>
        <record id="equip3_hr_accessright_settings.equip3_group_hr_recruitment_applicant__other" model="res.groups">
            <field name="name">Other</field>
            <field name="category_id" ref="equip3_hr_accessright_settings.module_recruitment_category"/>
        </record>



        <record id="equip3_hr_accessright_settings.equip3_group_hr_recruitment_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="base.module_category_human_resources_recruitment"/>
            <field name="implied_ids" eval="[(4, ref('hr.group_hr_user'))]"/>
            </record>
    
    
            <record id="hr_recruitment.group_hr_recruitment_user" model="res.groups">
                <field name="name">Officer</field>
                <field name="category_id" ref="base.module_category_human_resources_recruitment"/>
                <field name="implied_ids" eval="[(4, ref('equip3_hr_accessright_settings.equip3_group_hr_recruitment_user'))]"/>
            </record>

            <record id="equip3_hr_accessright_settings.equip3_group_hr_recruitment_manager" model="res.groups">
                <field name="name">Manager</field>
                <field name="category_id" ref="base.module_category_human_resources_recruitment"/>
                <field name="implied_ids" eval="[(4, ref('hr_recruitment.group_hr_recruitment_user'))]"/>
                </record>


                <record id="hr_recruitment.group_hr_recruitment_manager" model="res.groups">
                    <field name="name">Administrator</field>
                    <field name="category_id" ref="base.module_category_human_resources_recruitment"/>
                    <field name="implied_ids" eval="[(4, ref('equip3_hr_accessright_settings.equip3_group_hr_recruitment_manager'))]"/>
                    <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
                </record>



    </data>
</odoo>