<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="retail_view_move_line_tree">
            <field name="name">account.move.line.retail</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date']" position="before">
                    <field name="pos_branch_id" invisible="1"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="retail_view_move_line_form">
            <field name="name">account.move.line.retail</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='account_id']" position="before">
                    <field name="pos_branch_id" invisible="1"/>
                </xpath>
            </field>
        </record>

        <record id="retail_view_move_line_tree_grouped" model="ir.ui.view">
            <field name="name">account.move.line.tree.grouped</field>
            <field name="inherit_id" ref="account.view_move_line_tree_grouped"/>
            <field name="model">account.move.line</field>
            <field eval="1" name="priority"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date']" position="after">
                    <field name="pos_branch_id" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='state']" position="before">
                    <filter string="Branch" name="group_by_pos_branch_id" domain="[]"
                            context="{'group_by': 'pos_branch_id'}"/>
                </xpath>
            </field>
        </record>

        <record id="retail_view_account_move_line_filter" model="ir.ui.view">
            <field name="name">account.move.line.tree.filter</field>
            <field name="inherit_id" ref="account.view_account_move_line_filter"/>
            <field name="model">account.move.line</field>
            <field eval="1" name="priority"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date']" position="after">
                    <field name="pos_branch_id" invisible="1"/>
                </xpath>
                <xpath expr="//filter[@name='group_by_move']" position="before">
                    <filter string="Branch" name="group_by_pos_branch_id" domain="[]"
                            context="{'group_by': 'pos_branch_id'}"/>
                </xpath>
            </field>
        </record>

        <record id="retail_view_move_tree1" model="ir.ui.view">
            <field name="name">account.move.tree</field>
            <field name="inherit_id" ref="account.view_move_tree"/>
            <field name="model">account.move</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date']" position="before">
                    <field name="origin" optional="hide"/>
                    <field name="pos_session_id" optional="hide"/>
                    <field name="pos_branch_id" optional="hide" invisible="1"/> 
                </xpath>
            </field>
        </record>

        <record id="retail_view_invoice_tree2" model="ir.ui.view">
            <field name="name">account.move.tree</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="model">account.move</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="replace">
                    
                </xpath>
                <xpath expr="//field[@name='branch_id']" position="replace">
                    
                </xpath>
                <xpath expr="//field[@name='state']" position="before">
                    <field name="company_id"  options="{'no_create': True}" optional="show"/>
                    <field name="branch_id"  options="{'no_create': True}" optional="show"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="before">
                    <field name="origin" optional="hide"/>
                    <field name="pos_session_id" optional="hide"/>
                    <field name="pos_branch_id" optional="hide" invisible="1"/> 
                </xpath>
            </field>
        </record>

        <record id="retail_view_move_form" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="model">account.move</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='to_check']" position="after">
                    <field name="is_from_pos_receivable" readonly="1"/>
                    <field name="pos_order_id" readonly="1" attrs="{'invisible': [('is_from_pos_receivable','=',False)]}"/>
                </xpath>

                <xpath expr=".//notebook/page[@id='other_tab_entry']/group/group/field[@name='to_check']" position="after">
                    <field name="is_from_pos_receivable" readonly="1"/>
                    <field name="pos_order_id" readonly="1" attrs="{'invisible': [('is_from_pos_receivable','=',False)]}"/>
                </xpath>

                <xpath expr="//field[@name='ref']" position="after">
                    <field name="origin"/>
                    <!-- <field name="pos_session_id"/> -->
                    <field name="pos_branch_id" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree/field[@name='amount_currency']" position="replace">
                    <field name="amount_currency"
                           groups="base.group_multi_currency"
                    />
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree/field[@name='analytic_account_id']" position="replace">
                    <field name="analytic_account_id"
                           domain="['|', ('company_id', '=', parent.company_id), ('company_id', '=', False)]"
                           groups="analytic.group_analytic_accounting"
                           attrs="{'invisible': [('display_type', 'in', ('line_section', 'line_note'))]}"/>
                </xpath>
            </field>
        </record>

        <record id="retail_view_account_move_filter1" model="ir.ui.view">
            <field name="name">account.move.select</field>
            <field name="inherit_id" ref="account.view_account_move_filter"/>
            <field name="model">account.move</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date']" position="before">
                    <field name="origin"/>
                    <field name="pos_session_id"/>
                    <field name="pos_branch_id" invisible="1"/>
                </xpath>
                <xpath expr="//filter[@name='partner']" position="before">
                    <filter string="Branch" name="group_by_pos_branch_id" domain="[]"
                            context="{'group_by': 'pos_branch_id'}"/>
                    <filter string="Origin" name="group_by_origin" domain="[]"
                            context="{'group_by': 'origin'}"/>
                    <filter string="POS Session" name="group_by_pos_session_id" domain="[]"
                            context="{'group_by': 'pos_session_id'}"/>
                </xpath>
            </field>
        </record>

        <record id="retail_view_account_move_filter2" model="ir.ui.view">
            <field name="name">account.move.select</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="model">account.move</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date']" position="before">
                    <field name="pos_branch_id" invisible="1"/>
                    <field name="pos_session_id"/> 
                </xpath>
                <xpath expr="//filter[@name='status']" position="before">
                    <filter string="Branch" name="group_by_pos_branch_id" domain="[]"
                            context="{'group_by': 'pos_branch_id'}"/>
                    <filter string="Origin" name="group_by_origin" domain="[]"
                            context="{'group_by': 'origin'}"/>
                    <filter string="POS Session" name="group_by_pos_session_id" domain="[]"
                            context="{'group_by': 'pos_session_id'}"/>
                </xpath>
            </field>
        </record>


        <!-- INVOICE ORDER FORM VIEW -->
        <record id="pos_view_move_form_inherit" model="ir.ui.view">
            <field name="name">pos.view.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <field name="ref" position="after">
                    <field name="pos_session_id" readonly="True" />
                </field>
            </field>
        </record>

        <record id="view_move_form_inherit_pos_mod" model="ir.ui.view">
            <field name="name">account.move.form.inherit.pos.mod</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_total']" position="after">
                    <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='analytic_tag_ids']" position="move" />
                </xpath>
                <xpath expr="//notebook/page[@id='invoice_tab']/field[@name='invoice_line_ids']/tree/field[@name='analytic_tag_ids']" position="after">
                    <field name="approval_code" readonly="1"/>
                </xpath>
                <xpath expr="//notebook/page[@id='invoice_tab']/field[@name='invoice_line_ids']/tree" position="inside">
                    <field name="check_reconcile" readonly="1"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
