<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="pos_voucher_form_inherited" model="ir.ui.view">
        <field name="name">pos.voucher.form.inherited</field>
        <field name="model">pos.voucher</field>
        <field name="inherit_id" ref="equip3_pos_masterdata.pos_voucher_form"/>
        <field name="arch" type="xml">
            <field name="code" position="before">
                <field name="is_generate_voucher"/>
            </field>

            <field name="minimum_purchase_amount" position="after">
                <field name="limit_restrict_product_ids" widget="many2many_tags"/>
                <field name="pos_category_ids" widget="many2many_tags"/>
                <field name="brand_ids" widget="many2many_tags"/>
            </field>
        </field>
    </record>
</odoo>