<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_promotion_form_inherited_view" model="ir.ui.view">
        <field name="name">pos.promotion.form.inherited.view</field>
        <field name="model">pos.promotion</field>
        <field name="inherit_id" ref="equip3_pos_masterdata.pos_promotion_form"/>
        <field name="arch" type="xml">
            <field name="start_date" position="before">
                <field name="is_priority"/>      
                <field name="note" attrs="{'invisible': [('is_priority','=',False)]}"/>    
            </field>
            <field name="is_multi_level_promotion" position="after">
                <field name="no_of_usage"/> 
                <field name="no_of_used"/>
            </field>
        </field>
    </record>
</odoo>