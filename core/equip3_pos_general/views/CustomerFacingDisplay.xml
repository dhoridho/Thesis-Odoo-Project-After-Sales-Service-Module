<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="customer_facing_display_html" name="equip3_pos_general customer_facing_display_html" inherit_id="point_of_sale.customer_facing_display_html">
        
         <xpath expr="//div[hasclass('pos-total')]" position="before">
            <div class="pos-total" style="border-bottom: 2px solid black">
                <span id="client-name" class="client-name">Guest</span>
            </div>
            <div class="pos-total">
                <div>
                    <span class="client">Points</span>
                </div>
                <div>
                    <span id="client-points" class="client-points">0.00</span>
                </div>
            </div>
            <div class="pos-total"> 
                <div>
                    <span class="total-discount-formatting">DISC</span>
                </div>
                <div>
                    <span id="total-discount" class="pos_total-discount">$ 00.00</span>
                </div>
            </div>
            <div class="pos-total">
                <div>
                    <span class="total-taxes">TAXES</span>
                </div>
                <div>
                    <span id="total-taxes" class="pos_total-taxes">$ 00.00</span>
                </div>
            </div>
        </xpath>
        <xpath expr="//div[hasclass('pos_orderlines_header')]" position="inside">
            <div>Taxes</div>
            <div>Disc</div>
        </xpath>

        <xpath expr="//div[hasclass('pos_orderlines_header')]/div[2]" position="replace">
            <div style="border-left: unset;">Product</div>
        </xpath>
        <xpath expr="//div[hasclass('pos-payment_info_details')]" position="replace"/>
        <xpath expr="//div[hasclass('pos_orderlines')]" position="inside">
            <div  style="border-bottom: 2px solid #b2b2b2;"/>
            <table class='summary-table' style="background-color: #4e4e4e; color: white;">
                <tr>
                    <td style="text-align: left; padding: 5px; border-bottom: 1px solid;">
                        <div>
                            <span class="client">Customer</span>
                        </div>
                    </td>
                    <td class="header" style="text-align: right; font-weight: bold; padding: 5px; border-bottom: 1px solid;">
                        <div class="pos-total">
                            <span id="client-name" class="client-name">Guest</span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td style="text-align: left; padding: 5px; border-bottom: 1px solid;">
                        <div>
                            <span class="client">Points</span>
                        </div>
                    </td>
                    <td class="header" style="text-align: right; font-weight: bold; padding: 5px; border-bottom: 1px solid;">
                        <div class="pos-total">
                            <span id="client-points" class="client-points">0.00</span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td style="text-align: left; padding: 5px; border-bottom: 1px solid;">
                        <div>
                            <span class="total-discount-formatting">DISC</span>
                        </div>
                    </td>
                    <td class="header" style="text-align: right; font-weight: bold; padding: 5px; border-bottom: 1px solid;">
                        <div class="pos-total">
                            <span id="total-discount" class="pos_total-discount">$ 00.00</span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td style="text-align: left; padding: 5px; border-bottom: 1px solid;">
                        <div>
                            <span class="total-taxes">TAXES</span>
                        </div>
                    </td>
                    <td class="header" style="text-align: right; font-weight: bold; padding: 5px; border-bottom: 1px solid;">
                        <div class="pos-total">
                            <span id="total-taxes" class="pos_total-taxes">$ 00.00</span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td style="text-align: left; padding: 5px; border-bottom: 1px solid;">
                        <div>
                            <span class="total-amount-formatting">TOTAL</span>
                        </div>
                    </td>
                    <td class="header" style="text-align: right; font-weight: bold; padding: 5px; border-bottom: 1px solid;">
                        <div class="pos-total">
                            <span id="total-amount" class="pos_total-amount">$ 469.14</span>
                        </div>
                    </td>
                </tr>
            </table>
            <table class="pos-paymentlines" style="background-color: #4e4e4e; color: white;"/>
        </xpath>

        <xpath expr="//div[hasclass('pos-payment_info')]/div[hasclass('pos-company_logo')]" position="replace"/>

        <xpath expr="//div[hasclass('pos-payment_info')]" position="inside">
            <div class="pos-advertisement">
                <t t-if="first_img">
                    <div id="is_mute" t-att-data-value="ac_mute_video"/>
                    <div id="myCarousel" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner" role="listbox">
                            <div class="item active carousel-item" t-att-data-interval="first_img['image_duration']" align="center">
                                <t t-if="first_img['file_type']=='image'">
                                    <img t-att-src="first_img['img_link']" style="width: 100%; min-height: 90vh;"/>
                                </t>
                                <t t-if="first_img['file_type']=='video'">
                                    <t t-if="first_img['is_youtube_url']== False">
                                        <video controls="1" autoplay="autoplay" class="video_custom">
                                            <source t-att-src="first_img['img_link']" type="video/mp4" t-att-width="ac_width" t-att-height="ac_height"/>
                                            <source t-att-src="first_img['img_link']" type="video/ogg" t-att-width="ac_width" t-att-height="ac_height"/>
                                            <source t-att-src="first_img['img_link']" type="video/webm" t-att-width="ac_width" t-att-height="ac_height"/>
                                        </video>
                                    </t>
                                    <t t-if="first_img['is_youtube_url']==True">
                                        <div id="my_vid">
                                            <iframe t-att-width="ac_width" t-att-height="ac_height" t-att-src="first_img['img_link']+'?autoplay=1&amp;loop=1&amp;playlist='+first_img['name_of_url']" class="iframe_video_display"/>
                                        </div>
                                    </t>
                                </t>
                                <div class="carousel-caption">
                                    <h3>
                                        <t t-esc="first_img['name']"/>
                                    </h3>
                                    <p>
                                        <t t-esc="first_img['description']"/>
                                    </p>
                                </div>
                            </div>
                            <t t-foreach="image_link" t-as="link">
                                <div class="item carousel-item" t-att-data-interval="link['image_duration']" align="center">
                                    <t t-if="link['file_type']=='image'">
                                        <img t-att-src="link['img_link']" style="width: 100%; min-height: 90vh;"/>
                                    </t>
                                    <t t-if="link['file_type']=='video'">
                                        <t t-if="link['is_youtube_url']== False">
                                            <video controls="1" autoplay="autoplay" class="video_custom">
                                                <source t-att-src="link['img_link']" type="video/mp4" t-att-width="ac_width" t-att-height="ac_height"/>
                                                <source t-att-src="link['img_link']" type="video/ogg" t-att-width="ac_width" t-att-height="ac_height"/>
                                                <source t-att-src="link['img_link']" type="video/webm" t-att-width="ac_width" t-att-height="ac_height"/>
                                            </video>
                                        </t>
                                        <t t-if="link['is_youtube_url']==True">
                                            <div id="my_vid">
                                                <iframe t-att-width="ac_width" t-att-height="ac_height" t-att-src="link['img_link']+'?autoplay=1&amp;loop=1&amp;playlist='+link['name_of_url']" class="iframe_video_display"/>
                                            </div>
                                            <t t-att-src="link['img_link']+'?autoplay=1&amp;loop=1&amp;playlist='+link['name_of_url']"/>
                                        </t>
                                    </t>
                                    <div class="carousel-caption">
                                        <h3>
                                            <t t-esc="link['name']"/>
                                        </h3>
                                        <p>
                                            <t t-esc="link['description']"/>
                                        </p>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </t>
            </div>
            <t t-if="marquee_type == 'run'">
                <div class="marquee" t-att-style="'padding-top: 14px; background-color: %s' % marque_bg_color">
                    <p t-att-style="'font-size: %spx; color: %s; background-color: %s; white-space: nowrap;' % (marque_font_size, marque_color, marque_bg_color)">
                        <t t-esc="marquee_text"/>
                    </p>
                </div>
            </t>
            <t t-else="">
                <div t-att-style="'padding-top: 14px; background-color: %s' % marque_bg_color">
                    <p t-att-style="'text-align: center; overflow: hidden; font-size: %spx; color: %s; background-color: %s; white-space: nowrap;' % (marque_font_size, marque_color, marque_bg_color)">
                        <t t-esc="marquee_text"/>
                    </p>
                </div>
            </t>
        </xpath>
    </template>
</odoo>
