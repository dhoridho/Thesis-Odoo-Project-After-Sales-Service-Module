<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="general_view_pos_payment_form" model="ir.ui.view">
        <field name="name">pos.payment.form</field>
        <field name="model">pos.payment</field>
        <field name="inherit_id" ref="equip3_pos_masterdata.view_pos_payment_form"/>
        <field name="arch" type="xml">
            <field name="pos_order_id" position="after">
                <field name="company_id" />
                <field name="pos_branch_id" />
            </field>
        </field>
    </record>

    <record id="general_view_pos_payment_tree" model="ir.ui.view">
        <field name="name">pos.payment.tree</field>
        <field name="model">pos.payment</field>
        <field name="inherit_id" ref="equip3_pos_masterdata.view_pos_payment_tree"/>
        <field name="arch" type="xml">
            <field name="amount" position="before">
                <field name="company_id" optional="show"/>
                <field name="pos_branch_id" optional="show"/>
            </field>
           
        </field>
    </record>

    <record id="general_view_pos_payment_search" model="ir.ui.view">
        <field name="name">pos.payment.search.view</field>
        <field name="model">pos.payment</field>
        <field name="inherit_id" ref="equip3_pos_masterdata.view_pos_payment_search"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='pos_branch_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>


    <record id="general_pos_view_pos_payment_method_form_inherit" model="ir.ui.view">
        <field name="name">general.pos.view.pos.payment.method.form.inherit</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="equip3_pos_masterdata.pos_view_pos_payment_method_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_receivables']" position="after">
                <field name="is_receivables_show" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='is_receivables']" position="attributes">
                <attribute name="attrs">{'invisible': [('is_receivables_show','!=', True)]}</attribute>
            </xpath>
      
        </field>
    </record>



</odoo>