<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_users_view_general_form" model="ir.ui.view">
        <field name="name">res.users.form.view</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="equip3_pos_masterdata.res_users_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook/page/group/field[@name='pos_branch_id']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
            <xpath expr="//page[@name='point_of_sale']" position="inside">
                <group string="Security POS Screen">
                    <group string="Security on Order Lines">
                        <field name="allow_discount"/>
                        <field name="allow_qty"/>
                        <field name="allow_price"/>
                        <field name="allow_remove_line"/>
                        <field name="allow_minus"/>
                    </group>
                    <group string="Security on Actions">
                        <field name="allow_add_product"/>
                        <field name="allow_customer"/>
                        <field name="allow_payment"/>
                        <field name="allow_add_order"/>
                        <field name="allow_remove_order"/>
                        <field name="allow_payment_zero"/>
                        <field name="allow_offline_mode"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <record id="view_users_general_tree" model="ir.ui.view">
        <field name="name">res.users.form.view</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="equip3_pos_masterdata.view_users_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='pos_branch_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="general_view_users_form_simple_modif" model="ir.ui.view">
        <field name="name">res.user.branch</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="equip3_pos_masterdata.view_users_form_simple_modif"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='pos_branch_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
