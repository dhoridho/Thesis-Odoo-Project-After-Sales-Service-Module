<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="inherit_pos_res_config_settings_view_form1" model="ir.ui.view">
            <field name="name">inherit_pos_res_config_settings_view_form1</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
            <field name="priority">12</field>
            <field name="arch" type="xml">

                <xpath expr="//div[@data-key='point_of_sale']/div[hasclass('o_settings_container')][3]/div[hasclass('o_setting_box')]" position="after">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_order_rounding"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_order_rounding"/>
                            <div class="text-muted">Define the rounding method of order payment</div>
                            <label for="apply_rounding_type" string="Apply Rounding" attrs="{'invisible': [('is_order_rounding', '=', False)]}"/>
                            <div attrs="{'invisible': [('is_order_rounding', '=', False)]}">
                                <field name="apply_rounding_type"  nolabel="1"  attrs="{'required': [('is_order_rounding', '=', True)]}" />
                            </div>
                            <label for="apply_rounding_type" string="Rounding Method" attrs="{'invisible': [('is_order_rounding', '=', False)]}"/>
                            <div attrs="{'invisible': [('is_order_rounding', '=', False)]}">
                                <field name="rounding_method_id" nolabel="1"   attrs="{'required': [('is_order_rounding', '=', True)]}" domain="[('strategy','=','add_invoice_line')]" />
                            </div>

                            <!-- <label for="order_rounding_type" string="Rounding Method" attrs="{'invisible': [('is_order_rounding', '=', False)]}"/>
                            <div attrs="{'invisible': [('is_order_rounding', '=', False)]}">
                                <field name="order_rounding_type" nolabel="1"  attrs="{'required': [('is_order_rounding', '=', True)]}" />
                                <field name="rounding_multiplier" nolabel="1" attrs="{'required': [('is_order_rounding', '=', True)]}"/>
                            </div> -->
                        </div>
                    </div>
                </xpath>
                
                <xpath expr="//div[@data-key='point_of_sale']/div[hasclass('o_settings_container')][3]/div[hasclass('o_setting_box')]" position="inside">
                    <div class="o_setting_box" id="pos_setting_payment_method_receivable">
                        <div class="o_setting_left_pane">
                            <field name="is_pos_receivable"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_pos_receivable"/>
                            <div class="text-muted">
                                Active the receivable on Payment Method
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="inherit_pos_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">inherit_pos_res_config_settings_view_form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
            <field name="priority">17</field>
            <field name="arch" type="xml">

                <xpath expr="//div[@name='pricing_setting_container']" position="after">
                    <h2 style="margin-bottom: 20px !important;">Discount Settings</h2>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <!-- <field name="is_order_rounding"/> -->
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="pos_product_discount1_id" string="Discount"/>
                            <div class="text-muted">Product Used for Discount</div>
                            <div >
                                <field name="pos_product_discount1_id" nolabel="1"  />
                            </div>
                        </div>
                    </div>
                </xpath>

                <xpath expr="//div[@name='pricing_setting_container']" position="after">
                    <h2 class="h_receipt_setting_container">Receipt</h2>
                    <div class="row mt16 o_settings_container" name="box_receipt_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane" style='padding-left: 20px;'>
                                <label for="pos_def_receipt_template_id" string="Default POS Receipt Template"/>
                                <div >
                                    <field name="pos_def_receipt_template_id" nolabel="1"  />
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>

            </field>
        </record>
    </data>
</odoo>


