<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_pos_payment_inherit" model="ir.ui.view">
        <field name="name">view.pos.payment.inherit</field>
        <field name="model">pos.make.payment</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_payment"/>
        <field name="arch" type="xml">
            <xpath expr="//form/group" position="replace">
                <field name="config_id" invisible="1"/>
                <field name="pos_order_id" invisible="1"/>
                <group class="group_row">
                    <group class="group_col_left">
                        <field name="payment_method_id" domain="[('config_ids', 'in', config_id)]"/>
                        <field name="payment_date" invisible="1"/>
                        <field name="payment_name"/>
                    </group>
                    <group class="group_right_left">
                        <field name="amount"/>
                        <field name="payment_difference"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

</odoo>