<?xml version="1.0"?>
<odoo>
    <record id="import_pricelist_wizard_form_view" model="ir.ui.view">
        <field name="name">import.pricelist.form.view</field>
        <field name="model">import.pricelist.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name" required="1"/>
                        <field name="file" filename="file_name" required="1"/>
                        <field name="file_name" invisible="1"/>
                    </group>
                    <group>
                        <div class="d-inline-flex" id="download_import_pricelist_template">
                        <p>Download Sample Template</p>
                        <div class="" role="alert" style="margin-left: 10px; margin-top: 0px;">
                            <a href="/equip3_pos_general/static/description/ImportDocument.xlsx" target="_blank">
                                <strong>PriceList Template</strong>
                            </a>
                        </div>
                        </div>
                    </group>
                </group>
                <footer>
                    <button name="import_pricelist_records"
                            string="Import PriceList"
                            type="object"
                            class="oe_highlight"/>
                    <button string="Cancel"
                            class="oe_link"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="import_pricelist_template_action" model="ir.actions.act_window">
        <field name="name">Import PriceList</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">import.pricelist.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="equip3_pos_general.import_pricelist_wizard_form_view"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_import_pricelist"
              parent="point_of_sale.menu_point_config_product"
              action="import_pricelist_template_action"
              sequence="10"/>
</odoo>

