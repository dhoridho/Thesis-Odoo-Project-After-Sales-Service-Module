<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_payment_register_form_inherit_pos_mod" model="ir.ui.view">
        <field name="name">account.payment.register.inherit.pos.mod</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form"/>
        <field name="arch" type="xml">
            <xpath expr="//footer" position="before">
                <group string="POS Orders Validation" invisible="not context.get('is_from_pos_partner',False)">
                    <field name="pos_validate_file" filename="pos_validate_filename"/>
                    <field name="pos_validate_filename" invisible="1"/>
                    <button name="button_download_template" type="object" string="Download Template XLS File"/>
                </group>
                <button name="button_validate_data" type="object" string="Validate" class="btn btn-primary" attrs="{'invisible': [('pos_validate_file','=',False)]}"/>
                <field name="validate_data" readonly="1" string="Validation Result" attrs="{'invisible': [('validate_data','=',False)]}"/>
            </xpath>
        </field>
    </record>

</odoo>