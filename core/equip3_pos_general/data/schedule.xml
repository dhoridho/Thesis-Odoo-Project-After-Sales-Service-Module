<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="schedule_cancel_date" model="ir.cron">
            <field name="name">Cancel Date</field>
            <field name="model_id" ref="equip3_pos_general.model_product_cancel"/>
            <field name="state">code</field>
            <field name="code">model.schedule_cancel_date()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>


        <record id="cron_pos_picking_creation" model="ir.cron">
             <field name="name">POS Picking Creation Cron</field>
             <field name="model_id" ref="model_pos_order"/>
             <field name="state">code</field>
             <field name="code">model.create_order_picking_cron()</field>
             <field name="interval_number">2</field>
             <field name="interval_type">minutes</field>
             <field name="numbercall">-1</field>
             <field name="active">True</field>
        </record>

        <record id="cron_pos_disable_expired_promotion" model="ir.cron">
             <field name="name">POS Disable Expired Promotion</field>
             <field name="model_id" ref="model_pos_promotion"/>
             <field name="state">code</field>
             <field name="code">model.disable_expired_promotion_cron()</field>
             <field name="interval_number">8</field>
             <field name="interval_type">hours</field>
             <field name="numbercall">-1</field>
             <field name="active">True</field>
        </record>

        <record id="cron_pos_disable_expired_coupon" model="ir.cron">
             <field name="name">POS Disable Expired Coupon</field>
             <field name="model_id" ref="model_pos_coupon"/>
             <field name="state">code</field>
             <field name="code">model.disable_expired_coupon_cron()</field>
             <field name="interval_number">8</field>
             <field name="interval_type">hours</field>
             <field name="numbercall">-1</field>
             <field name="active">True</field>
        </record>

        <record id="cron_remove_bus_bus_data" model="ir.cron">
             <field name="name">Remove Communication Bus (bus.bus) Data</field>
             <field name="model_id" ref="model_bus_bus"/>
             <field name="state">code</field>
             <field name="code">model.auto_remove_data()</field>
             <field name="interval_number">2</field>
             <field name="interval_type">days</field>
             <field name="numbercall">-1</field>
             <field name="active">True</field>
        </record>

    </data>
</odoo>

