<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<template id="saledetail_report" inherit_id="point_of_sale.report_saledetails">
                <xpath expr="//thead/tr/th[1]" position="replace">
                        <th>Name</th>
                </xpath>
                
                <xpath expr="//table[2]/thead/tr/th[2]" position="after">
                        <th> </th>
                </xpath>
                <xpath expr="//table[2]/tbody/tr/td[2]" position="after">
                        <td> </td>
                </xpath>

                <xpath expr="//table[1]/thead/tr/th[1]" position="attributes">
                        <attribute name="width">33%</attribute>
                </xpath>
                <xpath expr="//table[1]/thead/tr/th[2]" position="attributes">
                        <attribute name="width">33%</attribute>
                </xpath>
                <xpath expr="//table[1]/thead/tr/th[3]" position="attributes">
                        <attribute name="width">33%</attribute>
                </xpath>
                <xpath expr="//table[2]/thead/tr/th[1]" position="attributes">
                        <attribute name="width">33%</attribute>
                </xpath>
                <xpath expr="//table[2]/thead/tr/th[2]" position="attributes">
                        <attribute name="width">33%</attribute>
                </xpath>
                <xpath expr="//table[2]/thead/tr/th[3]" position="attributes">
                        <attribute name="width">33%</attribute>
                </xpath>
                <xpath expr="//table[3]/thead/tr/th[1]" position="attributes">
                        <attribute name="width">33%</attribute>
                </xpath>
                <xpath expr="//table[3]/tbody/tr/td[2]" position="attributes">
                        <attribute name="width">33%</attribute>
                </xpath>
                <xpath expr="//table[3]/thead/tr/th[3]" position="attributes">
                        <attribute name="width">33%</attribute>
                </xpath>

                <xpath expr="//table/tbody/tr/td[2]" position="attributes">
                        <attribute name="class">text-center</attribute>
                </xpath>
                <xpath expr="//table/tbody/tr/td[3]" position="attributes">
                        <attribute name="class">text-center</attribute>
                </xpath>
                <xpath expr="//table[2]/tbody/tr/td[2]" position="attributes">
                        <attribute name="class">text-center</attribute>
                </xpath>
                <xpath expr="//table[3]/tbody/tr/td[2]" position="attributes">
                        <attribute name="class">text-center</attribute>
                </xpath>
                <xpath expr="//table[3]/tbody/tr/td[3]" position="attributes">
                        <attribute name="class">text-center</attribute>
                </xpath>
        </template>
</odoo>