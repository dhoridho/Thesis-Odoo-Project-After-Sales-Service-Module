<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="RemoveHeaderButtonBgColor" t-inherit="point_of_sale.HeaderButton" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('header-button')]" position="attributes">
            <attribute name="t-att-style"></attribute>
        </xpath>
    </t>
    <t t-name="Chrome" t-inherit="point_of_sale.Chrome" t-inherit-mode="extension" owl="1">
        <xpath expr="//img[hasclass('pos-logo')]" position="replace">
            <img class="pos-logo" t-on-click="trigger('toggle-debug-widget')" src="/equip3_pos_general/static/src/img/pos_logo.png" alt="Logo" />
        </xpath>
        <xpath expr="//SyncNotification" position="replace"/>
        <xpath expr="//CashierName" position="before">
            <SyncNotification/>
        </xpath>
        <xpath expr="//div[@id='hm_pos_confg_name']" position="attributes">
            <attribute name="style">font-weight:bold; line-height:2.5; text-align:center; border-radius:10px; border:solid 0.5px; letter-spacing:1.3px; color: #e04040; border: 1px solid #9b9ea3;display:none;</attribute>
        </xpath>
    </t>
    <t t-name="PosOrderDetail" t-inherit="equip3_pos_masterdata.PosOrderDetail" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('header')]/button[@title='RePrint Print Receipt']" position="replace">
            <button title="RePrint Print Receipt" t-on-click.stop="trigger('reprint_order')">
                <i class="fa fa-print"/>
                RePrint
            </button>
        </xpath>
        <xpath expr="//div[hasclass('header')]" position="inside">
            <button type="button" t-on-click.stop="trigger('void_order')">
                <t t-if="void_order_sync.state == 'connecting'">
                    <i aria-label="Sync Connecting" title="Sync Connecting" class="fa fa-fw fa-spin fa-spinner"></i>
                </t>
                <t t-else="">
                    <i class="fa fa-ban"></i>
                </t>
                <span>Void</span>
            </button>
        </xpath>
        <xpath expr="//div[hasclass('header')]/button[@title='RePrint Print Receipt']" position="after">
            <t t-if="order.state != 'draft' and env.pos.config.return_products and !order.is_return and !env.pos.check_expiry_date(order)">
                <button title="Return Order"  t-on-click.stop="trigger('return_order')">
                    <i class="fa fa-arrow-left"/>
                    Return Order
                </button>
            </t>
            <t t-if="order.state != 'draft' and env.pos.config.return_products and !order.is_return and env.pos.check_expiry_date(order)">
                <button title="Return Order" style="background: #F0F1F5; color: #858C9E;">
                    Return Period Exceeded
                </button>
            </t>
        </xpath>
    </t>
    <t t-name="HeaderButtonGeneral" t-inherit="point_of_sale.HeaderButton" t-inherit-mode="extension" owl="1">
        <xpath expr="//div/span" position="replace">
            <span>Close</span>
        </xpath>
        <xpath expr="//div/i" position="replace"/>
    </t>

</templates>