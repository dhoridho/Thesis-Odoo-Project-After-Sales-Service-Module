<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="PosOrderScreenExt" t-inherit="equip3_pos_masterdata.PosOrderScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//table[hasclass('summary-table')]" position="replace">
            <table class='summary-table' t-if="!state.detailIsShown and (getOrders and getOrders.length != 0)" style="    margin-bottom: 84px;">
<!--                 <colgroup>
                    <col width='3%'/>
                    <col width='17%'/>
                    <col width='10%'/>
                    <col width='10%'/>
                    <col width='10%'/>
                    <col width='10%'/>
                    <col width='10%'/>
                    <col width='10%'/>
                    <col width='5%'/>
                    <col width='10%'/>
                    <col width='5%'/>
                </colgroup> -->
                <tr class="receipt-line header" style="position: sticky;top: -19px;">
                    <td style="text-align: center" width='3%'>
                        No
                    </td>
                    <td style="text-align: center" width='17%'>
                        Ref
                    </td>
                    <td style="text-align: center" width='10%'>
                        Name
                    </td>
                    <td style="text-align: center" width='5%'>
                        Date
                    </td>
                    <td style="text-align: center" class="pos_line_customer" width='10%'>
                        Customer
                    </td>
                    <td style="text-align: center" width='10%'>
                        Total
                    </td>
                    <td style="text-align: center" width='10%'> 
                        Paid
                    </td>
                    <td style="text-align: center" width='10%'>
                        Tax
                    </td>
                    <td style="text-align: center" width='5%'>
                        Remaining
                    </td>
                    <td style="text-align: center" width='10%'>
                        State
                    </td>
                    <td style="text-align: center" class="pos_line_void_status" width='10%'>
                        Void Status
                    </td>
                </tr>
                <t t-set="number" t-value="1"/>
                <t t-foreach="getOrdersPagination" t-as="order"
                   t-key="order.id">
                    <PosOrderRow order="order"
                         number="number"
                         selectedOrder="state.selectedOrder"
                         detailIsShown="state.detailIsShown"
                         t-on-click-order="clickOrder" /> <!-- matching to (1) of PosOrderRow-->
                    <t t-set="number" t-value="number +1"/>
                </t>
            </table>
              
        </xpath>
        <xpath expr="//table[hasclass('summary-table')]" position="after">
            <div class="div_pagination" t-if="!state.detailIsShown and (getOrders and getOrders.length > 10)"> 
                <ul class="pagination" >
                    <li class="page-item" t-if="IsSHowPrevPagination" t-on-click="clickPrevPagination()">
                      <a class="page-link">Previous</a>
                    </li>
                    <t t-foreach="lengthPagination" t-as="Pagination">
                        <li class="page-item"  t-att-class="{ active: props.page_pagination==Pagination}" t-on-click="clickPagination(Pagination)" ><a class="page-link"><t t-esc="Pagination"/></a></li>
                    </t>
                    <li class="page-item" t-if="IsSHowNextPagination" t-on-click="clickNextPagination()">
                      <a class="page-link" >Next</a>
                    </li>
                </ul>
            </div>
        </xpath>
    </t>

</templates>