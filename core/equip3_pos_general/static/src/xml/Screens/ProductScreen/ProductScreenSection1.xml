<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="ProductScreenSection1" owl="1">
        <div class="pos_new_section pos-hidemobile" t-att-open_cart="props.open_cart">
            <t t-if="!env.isMobile">
                <div class="custom_row custom_row1">
                    <div class="custom_column button-wrapper">
                        <CustomerButton/>
                    </div>
                    <div class="custom_column button_open_feature" t-on-click="OpenFeatureButtons">
                        <span style="border-radius: 3px">
                            Features
                        </span>
                    </div>
                 <!--    <div class="custom_column" t-on-click="CardPaymentButton">
                        <span style="border-radius: 3px">
                            <span>
                                Card
                            </span>
                        </span>
                    </div> -->
                </div>
                <div class="custom_row custom_row2" t-if="env.pos.config.module_pos_restaurant and (env.pos.config.allow_merge_table or env.pos.config.allow_split_table)">
                    <ButtonMergeTable orderLineSection="1"/>
                    <div t-if="((env.pos.config.floor_ids.length > 0 and env.pos.config.allow_split_table) and env.pos.selected_order_method=='dine-in')" class="custom_column button_split_table">
                        <span>
                            Split Table
                        </span>
                    </div>
                    
                </div>

                <div class="custom_row custom_row2_1">
                    <UseCouponButton />
                </div>

                <div class="custom_row custom_row3">
                    <t t-if="env.pos.config.promotion_manual_select">
                        <div class="custom_column btn-apply-promotion" t-on-click="PromotionButtonClick">
                            <span style="border-radius: 3px">
                                <span>Apply Promotion</span>
                            </span>
                        </div>
                        <div class="custom_column btn-cancel-promotion" t-on-click="PromotionCancelButtonClick">
                            <span style="border-radius: 3px">
                                <span>Cancel Promotion</span>
                            </span>
                        </div>
                    </t>
                </div>

                <div class="custom_row custom_row4">
          <!--           <div  class="custom_column" t-on-click="SelfPickingButtonClick">
                        <span>
                            Self Picking
                        </span>
                    </div> -->

                    <div  class="custom_column" t-on-click="HomeDeliveryButtonClick" t-att-class="{
                            'button_pos_home_delivery_active': env.pos.get_order().is_home_delivery,
                        }" t-if="env.pos.config.shipping_order">
                        <span>
                            Home Delivery
                        </span>
                    </div>
                    
                </div>
                <div class="custom_row custom_row4">
                    <div class="custom_column" t-on-click="CardPaymentButonClick">
                        <span>
                            Card
                        </span>
                    </div>
                </div>
                
                <MonitorAutoSync t-if="env.pos.config.is_monitor_auto_sync"/>

            </t>

            <t t-if="env.isMobile">
                <div class="custom_row_mobile">
                    <div class="custom_column button-wrapper">
                        <CustomerButton/>
                    </div>
                    <div class="custom_column button_open_feature" t-on-click="OpenFeatureButtons">
                        <span style="border-radius: 3px">
                            Features
                        </span>
                    </div>
               <!--      <div class="custom_column" t-on-click="CardPaymentButton">
                        <span style="border-radius: 3px">
                            <span>
                                Card
                            </span>
                        </span>
                    </div> -->
                    <t t-if="env.pos.config.module_pos_restaurant">
                        <ButtonMergeTable orderLineSection="1"/>
                        <div t-if="((((env.pos.config.floor_ids.length > 0 and env.pos.config.takeaway_order) or !env.pos.config.takeaway_order) and env.pos.config.allow_split_table) and env.pos.selected_order_method=='dine-in')" class="custom_column button_split_table">
                            <span>
                                Split Table
                            </span>
                        </div>
                    </t>

                    <UseCouponButton />

                    <t t-if="env.pos.config.promotion_manual_select">
                        <!-- <ComplementaryButton orderLineSection='1'/> -->
                        <div class="custom_column" t-on-click="PromotionButtonClick">
                            <span style="border-radius: 3px">
                                <span>Apply Promotion</span>
                            </span>
                        </div>
                        <div class="custom_column" t-on-click="PromotionCancelButtonClick">
                            <span style="border-radius: 3px">
                                <span>Cancel Promotion</span>
                            </span>
                        </div>
                    </t> 

                <!--     <div class="custom_column" t-on-click="SelfPickingButtonClick">
                        <span style="border-radius: 3px">
                            <span>Self Picking</span>
                        </span>
                    </div> -->
                    <div class="custom_column" t-on-click="HomeDeliveryButtonClick"  t-att-class="{
                            'button_pos_home_delivery_active': env.pos.get_order().is_home_delivery,
                        }" t-if="env.pos.config.shipping_order">
                        <span style="border-radius: 3px">
                            <span>Home Delivery</span>
                        </span>
                    </div>
                </div>
            </t>

            <div class="redeem_product_and_reward"> 
                <RedeemProductButton t-if="env.pos.rewards"/>
                <RedeemRewardButton t-if="env.pos.redeem_product"/> 
            </div>

            <div class="take_away_and_order_button_class">
                <SubmitOrderButton t-if="env and env.pos and env.pos.printers.length"/>
                <TakeAwayButton t-if="env and env.pos and env.pos.config.screen_type != 'kitchen' and env.pos.config.sync_multi_session and env.pos.config.takeaway_order"/>
            </div>

            <div class="subpads" t-if="props.state.screen == 'Products' or env.isMobile">
                <NumpadWidget activeMode="props.state.numpadMode"/>
            </div>
        </div>
    </t>

</templates>
