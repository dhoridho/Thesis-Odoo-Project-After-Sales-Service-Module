<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

 
    <t t-name="GroupCardPaymentWidegt" owl="1">
    	<div class="main_card_group_cl">
    		<t t-esc="state"/>
    		<h3 class="title_card_group">Select a Card Group</h3>
    		<div class="card_group_top_cl">
		    	<t t-foreach="props.card_groups" t-as="cgroup">
		    		<div class="eq_card_group" t-att-class="{active: props.sel_card_group == cgroup.id}" t-on-click="trigger('click-card-group', cgroup)">
		    			<CardGroupImg card_group="cgroup"/>
		    			<span t-esc="cgroup.card_group_name"/>
		    		</div>	
		    	</t>
	    	</div>
	    	<t t-if="props.card_payments and props.card_payments.length">
		    	<h3 class="title_card_payment">Select a Payment Card</h3>
		    	<div class="card_payment_top_cl">
		    		<t t-foreach="props.card_payments" t-as="cpayment">
			    		<div class="eq_card_payment" t-att-class="{active: props.sel_card_payment == cpayment.id}" t-on-click="trigger('click-card-payment', cpayment)">
			    			<CardPaymentImg card_payment="cpayment"/>
			    			<span t-esc="cpayment.card_name"/>
			    		</div>	
			    	</t>
		    	</div>
		    </t>
    	</div>
    </t>

</templates>