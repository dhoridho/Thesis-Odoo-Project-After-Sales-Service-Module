<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="PopUpCardPayment" owl="1">
        <div class="modal-dialog">
            <div class="popup touch-scrollable scrollable-y">
            	<header class="title drag-handle">
                        <t t-esc="props.title" />
                </header>
                <main class="body">
                   <t t-if="props.card_groups">
                   		<GroupCardPaymentWidegt card_groups="props.card_groups" sel_card_group="selected_group_id" card_payments="card_payments" sel_card_payment="selected_card_payment"/>
                   </t>
                </main>
                <footer class="footer">
                    <div class="button confirm" t-on-click="confirm">
                        <t t-esc="props.confirmText" />
                    </div>
                    <div class="button cancel" t-on-click="cancel">
                        <t t-esc="props.cancelText" />
                    </div>
                </footer>
            </div>
        </div>
    </t>
 

</templates>