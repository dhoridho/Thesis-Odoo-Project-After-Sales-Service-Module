<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
	<t t-name="TableInfoWidget">
		<div class="table_popup_cl" t-if="table" t-attf-style="border-color:#{table.color}">
			<span class="table_info_name"><t t-esc="table.name"/></span>
			<div class="table_in_list">
				<div class="tab_info_icon">
					<img src="/equip3_pos_general/static/src/img/chair.png"/>
				</div>
				<div class="tab_info_icon tthm_seats">
					<t t-esc="table.seats"/>
				</div>
			</div>
			<div class="table_in_list">
				<div class="tab_info_icon ">
					<img src="/equip3_pos_general/static/src/img/user-group-man-man.png"/>
				</div>
				<div class="tab_info_icon tthm_customer_count">
					<t t-esc="tablePopInfo.customer_count"/>
				</div>
			</div>
			<div class="table_in_list">
				<div class="tab_info_icon ">
					<img src="/equip3_pos_general/static/src/img/clock--v3.png"/>
				</div>
				<div class="tab_info_icon tthm_date_order">
					<t t-if="tablePopInfo.checkedIn">
						<t t-esc="tablePopInfo.checkedIn"/>
					</t>
				</div>
			</div>
			<div class="table_in_list">
				<div class="tab_info_icon ">
					<img src="/equip3_pos_general/static/src/img/bank-card-back-side.png"/>
				</div>
				<div class="tab_info_icon tthm_amount_total">
					<t t-esc="tablePopInfo.amount"/>
				</div>
			</div>
			<div class="table_in_list">
				<div t-if="out_time" t-esc="out_time" style="color:red"/>
				<div t-if="in_time" t-esc="in_time" style="color:green"/>
			</div>
			<t t-if="table.tbl_moved_from">
                <div class="table_in_list">
                    <div class="tab_info_icon ">
                        <i class="fa fa-exchange"/>
                    </div>
                    <div class="tab_info_icon tthm_amount_total">
                        <t t-esc="table.tbl_moved_from[1]"/>
                    </div>
                </div>
            </t>
            <div class="table_in_list">
                <div class="table_seat_no_cl" style="width: 100%;text-align: right;color: #f8433f;">
                    <t t-esc="tablePopInfo.seat_no"/>
                </div>
            </div>
            <t t-if="table.tbl_moved_from">
                <div class="table_in_list">
                    <div class="tab_info_icon ">
                        <i class="fa fa-exchange"/>
                    </div>
                    <div class="tab_info_icon tthm_amount_total">
                        <t t-esc="table.tbl_moved_from[1]"/>
                    </div>
                </div>
            </t>
            <div class="table_in_list">
                <div class="table_seat_no_cl" style="width: 100%;text-align: right;color: #f8433f;">
                    <t t-esc="tablePopInfo.seat_no"/>
                </div>
            </div>
		</div>
	</t>
</templates>