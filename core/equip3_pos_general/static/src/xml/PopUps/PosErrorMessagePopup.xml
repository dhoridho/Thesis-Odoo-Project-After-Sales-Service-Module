<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

	<t t-name="PosErrorMessagePopup" owl="1">
        <div role="dialog" class="modal-dialog" id="PosErrorMessagePopup">
            <div class="popup popup-error" style="border-radius: 15px;width: 550px; overflow: hidden;">
                <header class="title" style="background: white; color: black; border-color: transparent;">
                    <div><t t-esc="props.title"/></div>
                </header>
                <div style="max-height: 300px; overflow: auto; padding: 0 30px;"> 
                	<div class="text-center" style="color:#626262; font-size:17px; font-weight:500; min-height: 280px;">
                        <span><t t-esc="state.message"/></span>
                    </div>
                </div>
                <a t-att-download="tracebackFilename" t-att-href="tracebackUrl" style="display:none;">
                    <div class="button icon download" id="blob_error_download"> 
                        <i class="fa fa-download" role="img" aria-label="Download error traceback" title="Download error traceback"></i>
                    </div>
                </a>
                <main class="body traceback main_error_desc_new_pos oe_hidden" style="display:none;">
                    <span style="word-break: break-all;" t-esc="state.debug_message" />
                </main>
                <footer class="footer" style="border-color: transparent;">
                    <div style="display: inline-flex;">
                        <div class="button_view_error_detail_error" t-on-click="buttonViewDetail">Download Detail</div>
                        <div class="button_view_error_close" t-on-click="confirm">Close</div>
                    </div>
                </footer> 
            </div>
        </div>
    </t>

</templates>