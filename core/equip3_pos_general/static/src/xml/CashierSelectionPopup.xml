<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="CashierSelectionPopup" owl="1">
        <div role="dialog" class="modal-dialog cashier-modal-dialog">
            <Draggable>
                <div class="popup popup-selection">
                    <header class="title drag-handle">
                        <t t-set="number" t-value="0"/>
                        <t t-esc="props.title" />
                    </header>
                    <div class="selection scrollable-y">
                        <t t-foreach="props.list" t-as="item" t-key="item.id">
                            <div class="selection-item" t-att-class="{ selected: item.isSelected }" t-on-click="selectItem(item.id)">
                                <span class="selection-item-image" t-if="item['imageUrl']">
                                    <img t-att-src="item['imageUrl']" class="selection-image"/>
                                </span>
                                <span class="selection-item-label">
                                    <div>
                                        <div><t t-esc="item.label"/></div>
                                        <div>
                                            <span t-if="number &lt; 10 and !env.isMobile">
                                                <i class="fa fa-keyboard-o"/>
                                                <span>  <t t-esc="number"/></span>
                                            </span>
                                            <t t-set="number" t-value="number + 1"/>
                                        </div>
                                    </div>
                                </span>
                                <t t-if="item['icon']">
                                    <i t-att-class="item.icon"/>
                                </t>
                               
                            </div>
                        </t>
                    </div>
                    <footer class="footer">
                        <div class="button cancel" t-on-click="cancel">
                            <t t-esc="props.cancelText" />
                        </div>
                    </footer>
                </div>
            </Draggable>
        </div>
    </t>

</templates>
