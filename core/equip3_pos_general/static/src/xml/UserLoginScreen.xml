<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="UserLoginScreen" owl="1">
        <div class="login-overlay">
        	<div id="livestream_scanner">
                <div id="interactive" class="viewport"></div>
                <div class="error"></div>
            </div>
            <div class="screen-login">
                <div class="login-title">
                	<div>
                		<small>Log in to </small> <t t-esc="shopName" />
                	</div>
                </div>
                <div class="login-body">
                    <span class="login-element login-scan-badge">
                        <button class="login-button button-login-scan-badge">
	                        <img class="login-scan-badge-img" src="/equip3_pos_general/static/src/img/login-scan-badge.svg"/>
	                        <div class="login-scan-badge-text">Scan Your Badge</div>
                        </button>
                    </span>
                    <span class="login-element login-select-employee">
                        <button class="login-button button-login-select-employee" t-on-click="selectCashier">
	                        <img class="login-select-employee-img" src="/equip3_pos_general/static/src/img/login-select-employee.svg"/>
	                        <div class="login-select-employee-text"><i class="fa fa-keyboard-o"/><span> Enter Account</span></div>
                        </button>
                    </span>
                </div>
                <div class="login-footer">
                    <small>
                        <button class="login-button button-login-close-session" t-on-click="closeSession">
	                        <img class="login-close-session-img" src="/equip3_pos_general/static/src/img/login-close.svg"/>
	                        <div class="login-close-session-text"><i class="fa fa-keyboard-o"/><span> Close</span></div>
                        </button>
                    </small>
                </div>
            </div>
        </div>
    </t>
</templates>


