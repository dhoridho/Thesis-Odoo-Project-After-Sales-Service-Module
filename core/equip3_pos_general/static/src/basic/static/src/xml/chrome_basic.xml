<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="CustomerFacingDisplayOrderLines" t-inherit="point_of_sale.CustomerFacingDisplayOrderLines" t-inherit-mode="extension" owl="1">
        <xpath expr="//t[@t-foreach='orderlines']/div[@class='pos_orderlines_item']/div[4]" position="attributes">
            <attribute name="style">white-space: nowrap;</attribute>
        </xpath>
    </t>

    <t t-name="CustomerFacingDisplayPaymentLines" t-inherit="point_of_sale.CustomerFacingDisplayPaymentLines" t-inherit-mode="extension" owl="1">
        <xpath expr="//t[2]" position="replace"/>
        <xpath expr="//t[1]" position="replace">
            <table class='summary-table' style="background-color: #4e4e4e; color: white;">
                <t t-foreach="order.get_paymentlines()" t-as="paymentline">
                    <tr>
                        <td style="text-align: left; padding: 5px; border-bottom: 1px solid;">
                            <div>
                                <span>
                                    <t t-esc="paymentline.name" />
                                </span>
                            </div>
                        </td>
                        <td class="header" style="text-align: right; font-weight: bold; padding: 5px; border-bottom: 1px solid;">
                            <div class="pos-total">
                                <span>
                                    <t t-esc="pos.format_currency(paymentline.get_amount(),false,order.currency)" />
                                </span>
                            </div>
                        </td>
                    </tr>
                </t>
                <t t-if="order.get_change() != 0.0">
                    <tr>
                        <td style="text-align: left; padding: 5px; border-bottom: 1px solid;">
                            <div>
                                <span>Change</span>
                            </div>
                        </td>
                        <td class="header" style="text-align: right; font-weight: bold; padding: 5px; border-bottom: 1px solid;">
                            <div class="pos-total">
                                <span>
                                    <t t-esc="pos.format_currency(order.get_change(),false,order.currency)"/>
                                </span>
                            </div>
                        </td>
                    </tr>
                </t>
            </table>
        </xpath>
    </t>

</templates>
