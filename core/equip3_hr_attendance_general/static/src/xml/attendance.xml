<?xml version="1.0" encoding="utf-8"?>
<template xml:space="preserve">
    <t t-name="HrAttendanceMyMainMenu">
        <div class="o_hr_attendance_kiosk_mode_container o_home_menu_background">
            <span class="o_hr_attendance_kiosk_backdrop"/>
            <div class="o_hr_attendance_clock text-center"/>

            <div class="o_hr_attendance_kiosk_mode" id="main-attendance">
                <div class="o_hr_attendance_user_badge o_home_menu_background">
                    <h3 class="mt8 mb24" style="color: white;font-weight: bold;">Welcome Administrator</h3>
                    <img class="img rounded-circle" t-attf-src="/web/image?model=hr.employee&amp;field=image_128&amp;id=#{widget.employee.id}" t-att-title="widget.employee.name" t-att-alt="widget.employee.name"/>
                </div>
                <div class="attendance_wrapper">
                    <div class="col">
                        <t t-set="checked_in" t-value="widget.employee.attendance_state=='checked_in'"/>
                        <t t-if="widget.employee">
                            <t t-if="checked_in">
                                <h3 class="mt8" style="margin-bottom: 15px !important;">Check In / Check Out</h3>
                                <h4 class="mt0 mb0 text-muted" t-if="checked_in">Today's work hours: <span t-esc="widget.hours_today"/></h4>
                            </t>
                            <t t-else="">
                                <h3 class="mt8" style="margin-bottom: 32px !important;">Check In / Check Out</h3>
                            </t>
                            <a class="fa fa-7x o_hr_attendance_sign_in_out_icon fa-sign-out" t-if="checked_in" aria-label="Sign out" title="Sign out"/>
                            <a class="fa fa-7x o_hr_attendance_sign_in_out_icon fa-sign-in" t-if="!checked_in" aria-label="Sign in" title="Sign in"/>
                            <h3 class="mt0 mb0 text-muted">Click to <b t-if="checked_in">check out</b><b t-if="!checked_in">check in</b></h3>
                        </t>
                        <t t-else="">
                            Warning : Your user should be linked to an employee to use attendance. Please contact your administrator.
                        </t>
                    </div>
                    <t t-if="checked_in">
                        <div class="separator" style="height: 304px"></div>
                    </t>
                    <t t-else="">
                        <div class="separator" style="height: 303px"></div>
                    </t>
                    <div class="col">
                        <t t-set="break_checked_in" t-value="widget.employee.break_state=='checked_in'"/>
                        <t t-if="widget.employee">
                            <t t-if="break_checked_in">
                                <h3 class="mt8" style="margin-bottom: 15px !important;">Start Break / End Break</h3>
                                <h4 class="mt0 mb0 text-muted" t-if="break_checked_in">Today's break: <span t-esc="widget.break_hours_today"/></h4>
                            </t>
                            <t t-else="">
                                <h3 class="mt8" style="margin-bottom: 32px !important;">Start Break / End Break</h3>
                            </t>
                            <a class="fa fa-7x o_hr_attendance_start_end_break_icon fa-clock-o" t-if="break_checked_in" aria-label="End Break" title="End Break"/>
                            <a class="fa fa-7x o_hr_attendance_start_end_break_icon fa-clock-o" t-if="!break_checked_in" aria-label="Start Break" title="Start Break"/>
                            <h3 class="mt0 mb0 text-muted">Click to <b t-if="break_checked_in">end break</b><b t-if="!break_checked_in">start break</b></h3>
                        </t>
                        <t t-else="">
                            Warning : Your user should be linked to an employee to use attendance. Please contact your administrator.
                        </t>
                    </div>
                </div>
            </div>

        </div>
    </t>

    <t t-name="HrAttendanceGreetingMessage">
        <div class="o_hr_attendance_kiosk_mode_container o_home_menu_background">
            <span class="o_hr_attendance_kiosk_backdrop"/>
            <div class="o_hr_attendance_clock text-center"/>
            <div class="o_hr_attendance_kiosk_mode">
                <t t-if="widget.attendance">
                    <div class="o_hr_attendance_user_badge o_home_menu_background">
                        <img class="img rounded-circle" t-attf-src="/web/image?model=hr.employee&amp;field=image_128&amp;id=#{widget.attendance.employee_id[0]}" t-att-title="widget.employee_name" t-att-alt="widget.employee_name"/>
                    </div>
                    <t t-if="widget.attendance.check_out">
                        <h1 class="mb0">Goodbye <t t-esc="widget.employee_name"/>!</h1>
                        <h2 class="o_hr_attendance_message_message mt4 mb24"/>
                        <div class="alert alert-info h2 mt0" role="status">
                            Checked out at <b><t t-esc="widget.attendance.check_out_time"/></b>
                            <br/><b><t t-esc="widget.hours_today"/></b>
                        </div>
                        <h3 class="o_hr_attendance_random_message mb24"/>
                        <div class="o_hr_attendance_warning_message mt24 alert alert-warning" style="display:none" role="alert"/>
                    </t>
                    <t t-elif="widget.attendance.start_break and !widget.attendance.end_break">
                        <h1 class="mb24">Enjoy Your Break Time!</h1>
                        <h2 class="o_hr_attendance_message_message mt4 mb24" style="display: none !important;"/>
                        <div class="alert alert-info h2 mt0 mb24" role="status" style="margin-bottom: 100px !impoetant;">
                            Start Break at <b><t t-esc="widget.attendance.start_break_time"/></b>
                        </div>
                        <h3 class="o_hr_attendance_random_message mb24" style="display:none !important;"/>
                        <div class="o_hr_attendance_warning_message mt24 alert alert-warning" style="display:none" role="alert"/>
                    </t>
                    <t t-elif="widget.attendance.start_break and widget.attendance.end_break">
                        <h1 class="mb0">Welcome Back!</h1>
                        <h3 class="mt4 mb24"><b>Let's get back to work!</b></h3>
                        <div class="alert alert-info h2 mt0 mb24" role="status" style="margin-bottom: 100px !impoetant;">
                            End Break at <b><t t-esc="widget.attendance.end_break_time"/></b>
                        </div>
                        <h3 class="o_hr_attendance_random_message mb24" style="display:none !important;"/>
                        <div class="o_hr_attendance_warning_message mt24 alert alert-warning" style="display:none" role="alert"/>
                    </t>
                    <t t-else="">
                        <h1 class="mb0">Welcome <t t-esc="widget.employee_name"/>!</h1>
                        <h2 class="o_hr_attendance_message_message mt4 mb24"/>
                        <div class="alert alert-info h2 mt0" role="status">
                            Checked in at <b><t t-esc="widget.attendance.check_in_time"/></b>
                        </div>
                        <h3 class="o_hr_attendance_random_message mb24"/>
                        <div class="o_hr_attendance_warning_message mt24 alert alert-warning" style="display:none" role="alert"/>
                    </t>
                    <button class="o_hr_attendance_button_dismiss btn btn-primary btn-lg">
                        <span class="text-capitalize" t-if="widget.attendance.check_out">Goodbye</span>
                        <span class="text-capitalize" t-else="">OK</span>
                    </button>
                </t>
                <t t-else="">
                    <div class="alert alert-warning" role="alert">Invalid request, please return to the main menu.</div>
                    <button class="o_hr_attendance_button_dismiss btn btn-secondary btn-lg">Go back</button>
                </t>
            </div>
        </div>
    </t>
</template>