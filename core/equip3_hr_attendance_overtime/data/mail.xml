<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Start Aprooved or Confirm State Email template-->
    <data noupdate="1">
        <record id="email_template_approved_overtime" model="mail.template">
            <field name="name">Approval of Overtime Request - Send by Email</field>
            <field name="email_from">${ctx['email_from']|safe}</field>
            <field name="subject">Approval of Overtime Request</field>
            <field name="email_to">${ctx['email_to']|safe}</field>
            <field name="model_id" ref="equip3_hr_attendance_overtime.model_hr_overtime_request"/>
            <field eval="True" name="auto_delete"/>
            <field name="body_html"><![CDATA[
            <p>Dear ${object.employee_id.name},</p>
            <br/>
            <p>
                We have received your request for Overtime period (${ctx['date_from']|safe} to ${ctx['date_to']|safe}).
            </p>
            <br/>
            <p>
                This notification serves as confirmation that your overtime request has been approved.
            </p>
            <br/>
            <br/>
            <p>
                Thank you.
            </p>
            <br/>
            <br/>
        ]]></field>
        </record>
    <!-- End Start Aprooved State Email template-->

    <!-- Start Aproover or Confirm State Email template-->
        <record id="email_template_approver_of_overtime_req" model="mail.template">
            <field name="name">Send for approver - Send by Email</field>
            <field name="email_from">${ctx['email_from']|safe}</field>
            <field name="subject">Application for Overtime Approval</field>
            <field name="email_to">${ctx['email_to']|safe}</field>
            <field name="model_id" ref="equip3_hr_attendance_overtime.model_hr_overtime_request"/>
            <field eval="True" name="auto_delete"/>
            <field name="body_html"><![CDATA[
            <p>Dear ${ctx['approver_name']|safe},</p>
            <br/>
            <p>
                Based on the Overtime request ${object.name}.</br>
                You have approval pending that need your decision to approve or reject the overtime request from
                ${object.employee_id.name}.
            </p>
            <br/>
            <p>
                ${object.employee_id.name} has requested overtime for period (${ctx['date_from']|safe} to
                ${ctx['date_to']|safe}).
            </p>
            <br/>
            <table cellspacing="0" cellpadding="0"
                   style="width:900px;border-collapse:collapse;background:inherit;color:inherit;border:1px solid black;">
                <thead style="border:1px solid black;">
                    <th class="text-center" style="border:1px solid black;">Employee</th>
                    <th class="text-center" style="border:1px solid black;">Overtime Reason</th>
                    <th class="text-center" style="border:1px solid black;">Date</th>
                    <th class="text-center" style="border:1px solid black;">Name of Day</th>
                    <th class="text-center" style="border:1px solid black;">Start Time</th>
                    <th class="text-center" style="border:1px solid black;">End Time</th>
                    <th class="text-center" style="border:1px solid black;">Hours</th>
                </thead>
                <tbody style="border:1px solid black;">
                    % for line in object.request_line_ids:
                    <tr style="border:1px solid black;">
                        <td style="border:1px solid black;text-align:center;">${line.employee_id.name}</td>
                        <td style="border:1px solid black;text-align:center;">${line.overtime_reason}</td>
                        <td style="border:1px solid black;text-align:center;">${line.date}</td>
                        <td style="border:1px solid black;text-align:center;">${line.name_of_day}</td>
                        <td style="border:1px solid black;text-align:center;">${line.start_time}</td>
                        <td style="border:1px solid black;text-align:center;">${line.end_time}</td>
                        <td style="border:1px solid black;text-align:center;">${line.number_of_hours}</td>
                    </tr>
                    % endfor
                </tbody>
            </table>
            <br/>
            <p>
                You can approve or reject the overtime request by clicking this button:
            </p>
            <br/>
            <a href="${ctx['url']|safe}"
               style="padding: 8px 12px; font-size: 12px; color: #FFFFFF; text-decoration: none !important; font-weight: 400; background-color: #875A7B; border: 0px solid #875A7B; border-radius:3px">
                View Overtime
            </a>
            <br/>
            <br/>
            <p>
                Thank you.
            </p>
            <br/>
            <br/>
                                    ]]></field>
        </record>
    <!-- End Start Aproover or Confirm State Email template-->

    <!-- Start Reject Email template-->
        <record id="email_template_rejection_of_overtime_req" model="mail.template">
            <field name="name">Rejection of Overtime Request - Send by Email</field>
            <field name="email_from">${ctx['email_from']|safe}</field>
            <field name="subject">Rejection of Overtime Request</field>
            <field name="email_to">${ctx['email_to']|safe}</field>
            <field name="model_id" ref="equip3_hr_attendance_overtime.model_hr_overtime_request"/>
            <field eval="True" name="auto_delete"/>
            <field name="body_html"><![CDATA[
            <p>Dear ${object.employee_id.name},</p>
            <br/>
            <p>
                We have received your request to Overtime period (${ctx['date_from']|safe} to ${ctx['date_to']|safe}).
            </p>
            <br/>
            <p>
                This notification serves as confirmation that your overtime request has been rejected.
            </p>
            <br/>
            <br/>
            <p>
                Thank you.
            </p>
            <br/>
            <br/>
        ]]></field>
        </record>
    <!-- End Reject Email template-->


    <!--Actual email templates-->

    <!-- Start Actual Aproover or Confirm State Email template-->
        <record id="email_template_approver_of_actual_approval" model="mail.template">
            <field name="name">Actual Overtime Approval - Send by Email</field>
            <field name="email_from">${ctx['email_from']|safe}</field>
            <field name="subject">Application for Actual Overtime Approval</field>
            <field name="email_to">${ctx['email_to']|safe}</field>
            <field name="model_id" ref="equip3_hr_attendance_overtime.model_hr_overtime_actual"/>
            <field eval="True" name="auto_delete"/>
            <field name="body_html"><![CDATA[
            <p>Dear ${ctx['approver_name']|safe},
                <br/>
                <p>
                </br>
                Based on the Actual Overtime Request ${object.name}.
            </br>
            You have approval pending that need your decision to approve or reject the Actual Overtime Request from
            ${object.employee_id.name}.
        </p>
        <br/>
        <p>
            ${object.employee_id.name} has requested overtime for period (${ctx['date_from']|safe} to
            ${ctx['date_to']|safe}).
        </p>
        <br/>
        <table cellspacing="0" cellpadding="0"
               style="width:900px;border-collapse:collapse;background:inherit;color:inherit;border:1px solid black;">
            <thead style="border:1px solid black;">

                <th class="text-center" style="border:1px solid black;">Employee</th>
                <th class="text-center" style="border:1px solid black;">Overtime Reason</th>
                <th class="text-center" style="border:1px solid black;">Date</th>
                <th class="text-center" style="border:1px solid black;">Name of Day</th>
                % if object.actual_based_on == 'overtime_request':
                <th class="text-center" style="border:1px solid black;">Start Time</th>
                % endif
                % if object.actual_based_on == 'overtime_request':
                <th class="text-center" style="border:1px solid black;">End Time</th>
                % endif
                % if object.actual_based_on == 'overtime_request':
                <th class="text-center" style="border:1px solid black;">Hours</th>
                % endif
                <th class="text-center" style="border:1px solid black;">Actual Start Time</th>
                <th class="text-center" style="border:1px solid black;">Actual End Time</th>
                <th class="text-center" style="border:1px solid black;">Actual Hours</th>
                <th class="text-center" style="border:1px solid black;">Coefficient Hours</th>
                <th class="text-center" style="border:1px solid black;">Overtime Fee</th>
                <th class="text-center" style="border:1px solid black;">Meal Allowance</th>
            </thead>
            <tbody style="border:1px solid black;">
                % for line in object.actual_line_ids:
                <tr style="border:1px solid black;">
                    <td style="border:1px solid black;text-align:center;">${line.employee_id.name}</td>
                    <td style="border:1px solid black;text-align:center;">${line.overtime_reason}</td>
                    <td style="border:1px solid black;text-align:center;">${line.date}</td>
                    <td style="border:1px solid black;text-align:center;">${line.name_of_day}</td>
                    % if object.actual_based_on == 'overtime_request':
                    <td style="border:1px solid black;text-align:center;">${line.start_time}</td>
                    % endif
                    % if object.actual_based_on == 'overtime_request':
                    <td style="border:1px solid black;text-align:center;">${line.end_time}</td>
                    % endif
                    % if object.actual_based_on == 'overtime_request':
                    <td style="border:1px solid black;text-align:center;">${line.hours}</td>
                    % endif
                    <td style="border:1px solid black;text-align:center;">${line.actual_start_time}</td>
                    <td style="border:1px solid black;text-align:center;">${line.actual_end_time}</td>
                    <td style="border:1px solid black;text-align:center;">${line.actual_hours}</td>
                    <td style="border:1px solid black;text-align:center;">${line.coefficient_hours}</td>
                    <td style="border:1px solid black;text-align:center;">${line.amount}</td>
                    <td style="border:1px solid black;text-align:center;">${line.meal_allowance}</td>
                </tr>
                % endfor
            </tbody>
        </table>
        <br/>
        <p>
            You can approve or reject the overtime request by clicking this button:
        </p>
        <br/>
        <a href="${ctx['url']|safe}"
           style="padding: 8px 12px; font-size: 12px; color: #FFFFFF; text-decoration: none !important; font-weight: 400; background-color: #875A7B; border: 0px solid #875A7B; border-radius:3px">
            View Overtime
        </a>
        <br/>
        <br/>
        <p>
            Thank you.
        </p>
        <br/>
        <br/>
                        ]]></field>
        </record>
    <!-- End Start Actual Aproover or Confirm State Email template-->

    <!-- StartActual  Aprooved or Confirm State Email template-->
