<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_overtime_actual_form_view" model="ir.ui.view">
            <field name="name">hr.overtime.actual.form</field>
            <field name="model">hr.overtime.actual</field>
            <field name="arch" type="xml">
                <form string="Actual Overtimes">
                    <header>
                        <button name="confirm" string="Confirm"  attrs="{'invisible':[('state','not in',['draft'])]}" type="object" class="oe_highlight"/>
                        <button name="calculate_overtime" string="Calculate Overtime"  attrs="{'invisible':['|',('state','not in',['draft']),('applied_to','in',['extra_leave'])]}" type="object" class="oe_highlight"/>
                        <button name="convert_to_leave" string="Convert to Leave"  attrs="{'invisible':['|',('state','not in',['approved']),('applied_to','not in',['extra_leave'])]}" type="object" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,to_approve,approved,convert_as_leave,rejected"  attrs="{'invisible':[('is_overtime_approval_matrix','=',False)]}"/>
                        <field name="state1" widget="statusbar" statusbar_visible="draft,approved,convert_as_leave" attrs="{'invisible':[('is_overtime_approval_matrix','!=',False)]}"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="is_admin_user" invisible="1"/>
                                <field name="is_calculated" invisible="1" readonly="1"/>
                                <field name="request_type"  readonly="1" force_save="1"/>
                                <field name="employee_id" attrs="{'readonly': ['|',('is_admin_user', '!=', True),('state','not in',['draft'])]}" options="{'no_open': True,'no_create': True}" force_save="1"/>
                                <field name="employee_ids" widget="many2many_tags" invisible="1" readonly="1" force_save="1"/>
                                <field name="actual_based_on" attrs="{'readonly':[('state','not in',['draft'])]}"/>
                                <field name="applied_to" attrs="{'readonly':[('state','not in',['draft'])]}"/>
                                <field name="overtime_request" attrs="{'invisible':[('actual_based_on','!=','overtime_request')], 'required':[('actual_based_on','=','overtime_request')], 'readonly':[('state','not in',['draft'])]}" widget="selection"/>
                                <label for="period_start" string="Period Date"/>
                                <div>
                                    <field name="period_start" class="oe_inline" attrs="{'readonly':[('state','not in',['draft'])]}" force_save="1"/> to
                                    <field name="period_end" class="oe_inline" attrs="{'readonly':[('state','not in',['draft'])]}" force_save="1"/>
                                </div>
                                <field name="description" attrs="{'readonly':[('state','not in',['draft'])]}"/>
                                <field name="total_actual_hours" widget="float_time"/>
                                <field name="total_coefficient_hours"/>
                                <field name="total_overtime_amount"/>
                            </group>
                            <group>
                                <field name="company_id" readonly="1" force_save="1"/>
                                <field name="create_date" readonly="1"/>
                                <field name="create_uid" readonly="1"/>
                                <field name="approvers_ids" widget="many2many_tags" invisible="1"/>
                                <field name="is_overtime_approval_matrix" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Actual Overtime Lines">
                                <field name="actual_line_ids" attrs="{'readonly':[('state','not in',['draft'])]}">
                                    <tree editable="bottom">
                                        <field name="employee_id" readonly="1" force_save="1"/>
                                        <field name="state" readonly="1" force_save="1" invisible="1"/>
                                        <field name="overtime_reason" force_save="1" attrs="{'readonly':['|',('state','not in',['draft']),('parent.actual_based_on','=','overtime_request')]}"/>
                                        <field name="date" force_save="1" attrs="{'readonly':['|',('state','not in',['draft']),('parent.actual_based_on','=','overtime_request')]}"/>
                                        <field name="name_of_day"/>
                                        <field name="start_time" widget="float_time" force_save="1" attrs="{'column_invisible': [('parent.actual_based_on','!=','overtime_request')]}"/>
                                        <field name="end_time" widget="float_time" force_save="1" attrs="{'column_invisible': [('parent.actual_based_on','!=','overtime_request')]}"/>
                                        <field name="hours" widget="float_time" string="Hours" force_save="1" attrs="{'column_invisible': [('parent.actual_based_on','!=','overtime_request')]}"/>
                                        <field name="actual_start_time" widget="float_time" attrs="{'readonly':[('state','not in',['draft'])]}"/>
                                        <field name="actual_end_time" widget="float_time" attrs="{'readonly':[('state','not in',['draft'])]}"/>
                                        <field name="break_time" widget="float_time"/>
                                        <field name="actual_hours" widget="float_time"/>
                                        <field name="coefficient_hours" readonly="1" force_save="1"/>
                                        <field name="amount" readonly="1" force_save="1"/>
                                        <field name="meal_allowance" readonly="1" force_save="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string=" Approval Matrix Lines" attrs="{'invisible':[('is_overtime_approval_matrix','=',False)]}">
                                <field name="actual_approval_line_ids">
                                    <tree editable="bottom" create="0" delete="0">
                                        <field name="sequence" readonly="1" force_save="1"/>
                                        <field name="approver_id" widget="many2many_tags"  readonly="1" force_save="1"/>
                                        <field name="matrix_user_ids" widget="many2many_tags" readonly="1" invisible="1" force_save="1"/>
                                        <field name="is_delegation_mail_sent" invisible="1"/>
                                        <field name="minimum_approver" readonly="1" force_save="1"/>
                                        <field name="approval_status" readonly="1" force_save="1"/>
                                        <field name="timestamp" readonly="1" force_save="1"/>
                                        <field name="feedback" readonly="1" force_save="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Attendances">
                                <field name="actual_attendance_line_ids">
                                    <tree editable="bottom" create="0" delete="0">
                                        <field name="attendance_id" readonly="1" force_save="1" invisible="1"/>
                                        <field name="employee_id" readonly="1" force_save="1" invisible="1"/>
                                        <field name="check_in" readonly="1" force_save="1"/>
                                        <field name="check_out" readonly="1" force_save="1"/>
                                        <field name="worked_hours" readonly="1" force_save="1"/>
                                        <field name="attendance_status" readonly="1" force_save="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

