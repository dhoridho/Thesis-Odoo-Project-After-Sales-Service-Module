<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	 <record id="overtime_flow_view_form" model="ir.ui.view">
        <field name="name">hr.overtime.flow.view.form</field>
        <field name="model">hr.overtime.flow</field>
        <field name="arch" type="xml">
            <form string="Talent Management Flow" class="overtime_flow_menu d-flex flex-column"> 
                <div class="content-header">
                    <div class="d-flex p-3 w-100">
                        <span>Overtime Flow</span>
                    </div>
                </div>
                <div class="content-body">
                    <div class="container h-100">
                        <div class="row h-100">

                            <div class="col-md-1 d-flex flex-column">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="equip3_hr_attendance_overtime.overtime_rules_act_window" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_attendance_overtime/static/src/img/configuration.svg"/>
                                            </div>
                                            <div class="button-text">Overtime Rules</div>
                                             <div class="menu-arrow-down-right">
                                                <span class="arrow is-triangle arrow-bar is-down-right"></span>
                                            </div>
                                        </button>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="equip3_hr_attendance_overtime.equip3_hr_overtime_approval_config_settings_action" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_attendance_overtime/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Settings</div>
                                            <div class="menu-arrow-up-right">
                                                <span class="arrow is-triangle arrow-bar is-up-right"></span>
                                            </div>
                                        </button>
                                    </div>
                                </div>       
                            </div>

                            <div class="col-md-1 d-flex flex-column">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="action_none" 
                                            type="object"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_attendance_overtime/static/src/img/overtime.svg"/>
                                            </div>
                                            <div class="button-text">Overtimes</div>
                                            <div class="menu-arrow">
                                                <span class="arrow is-triangle arrow-bar is-right"></span>
                                            </div>
                                            <div class="menu-arrow-down-right">
                                                <span class="arrow is-triangle arrow-bar is-down-right" style="top:50px;right:-225px"></span>
                                            </div>
                                            <div class="menu-arrow-up-right" style="top:-40px">
                                                <span class="arrow is-triangle arrow-bar is-up-right" style="transform: rotate(270deg);"></span>
                                            </div>
                                            <div class="menu-arrow-up-right">
                                                <span class="arrow is-triangle arrow-bar is-up-right" style="top:-40px;right:-225px"></span>
                                            </div>
                                        </button>
                                    </div>  
                                </div>
                            </div>

                            <div class="col-md-2 d-flex flex-column">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="equip3_hr_attendance_overtime.overtime_by_manager_act_window" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_attendance_overtime/static/src/img/manage-overtimes.svg"/>
                                            </div>
                                            <div class="button-text">Overtime Request</div>
                                            <div class="menu-arrow" style="right:-140px">
                                                <span class="arrow is-triangle arrow-bar is-right"></span>
                                            </div>
                                            <div class="menu-arrow-up-right" style="right:-30px;top:-25%">
                                                <span class="arrow is-triangle arrow-bar is-up-right"></span>
                                            </div>
                                        </button>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="equip3_hr_attendance_overtime.overtime_requests_act_window" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_attendance_overtime/static/src/img/my-overtime.svg"/>
                                            </div>
                                            <div class="button-text">My Overtime Request</div>
                                            <div class="menu-arrow-down-right">
                                                <span class="arrow is-triangle arrow-bar is-down-right" style="top:90px;transform: rotate(360deg);"></span>
                                            </div>
                                            
                                            <div class="menu-arrow-down">
                                                <span class="arrow is-triangle arrow-bar is-down"></span>
                                            </div>
                                        </button>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="equip3_hr_attendance_overtime.overtime_request_lines_act_window" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_attendance_overtime/static/src/img/my-overtime.svg"/>
                                            </div>
                                            <div class="button-text">My Overtime Request Lines</div>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-1 d-flex flex-column">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12 col-12" style="padding-bottom:270px"> 
                                        <button name="equip3_hr_attendance_overtime.overtime_requests_approval_act_window" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_attendance_overtime/static/src/img/manage-overtimes.svg"/>
                                            </div>
                                            <div class="button-text">Overtime Request to Approve</div>
                                             <div class="menu-arrow" style="top:30px">
                                                <span class="arrow is-triangle arrow-bar is-right"></span>
                                            </div>
                                        </button>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="equip3_hr_attendance_overtime.overtime_requests_approval_act_window" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_attendance_overtime/static/src/img/manage-overtimes.svg"/>
                                            </div>
                                            <div class="button-text">Overtime Request to Approve</div>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-1 d-flex flex-column">
                                <div class="row" style="padding-bottom:400px">
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="equip3_hr_attendance_overtime.action_hr_overtime_analysis_view_report" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_attendance_overtime/static/src/img/reporting.svg"/>
                                            </div>
                                            <div class="button-text">Overtime Analysis</div>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-1 d-flex flex-column">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="equip3_hr_attendance_overtime.hr_overtime_actual_by_manager_act_window" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_attendance_overtime/static/src/img/manage-overtimes.svg"/>
                                            </div>
                                            <div class="button-text">Actual Overtime Request</div>
                                            <div class="menu-arrow">
                                                <span class="arrow is-triangle arrow-bar is-right"></span>
                                            </div>
                                        </button>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="equip3_hr_attendance_overtime.hr_overtime_actual_lines_act_window_custom" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_attendance_overtime/static/src/img/my-overtime.svg"/>
                                            </div>
                                            <div class="button-text">My Actual Overtime Lines</div>
                                        </button>
                                    </div>
                                    
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="equip3_hr_attendance_overtime.hr_overtime_actual_act_window_custom" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_attendance_overtime/static/src/img/my-overtime.svg"/>
                                            </div>
                                            <div class="button-text">My Actual Overtimes</div>
                                            <div class="menu-arrow-up">
                                                <span class="arrow is-triangle arrow-bar is-up"></span>
                                            </div>
                                            <div class="menu-arrow">
                                                <span class="arrow is-triangle arrow-bar is-right"></span>
                                            </div>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2 d-flex flex-column">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12 col-12" style="padding-bottom:120px"> 
                                        <button name="equip3_hr_attendance_overtime.hr_overtime_actual_approval_act_window" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_attendance_overtime/static/src/img/manage-overtimes.svg"/>
                                            </div>
                                            <div class="button-text">Actual Overtime to Approve</div>
                                            <div class="menu-arrow-up-right">
                                                <span class="arrow is-triangle arrow-bar is-up-right"></span>
                                            </div>
                                            <div class="menu-arrow-down-right">
                                                <span class="arrow is-triangle arrow-bar is-down-right"></span>
                                            </div>
                                            <div class="menu-arrow" style="top:30px">
                                                <span class="arrow is-triangle arrow-bar is-right"></span>
                                            </div>
                                        </button>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="equip3_hr_attendance_overtime.hr_overtime_actual_approval_act_window" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_attendance_overtime/static/src/img/manage-overtimes.svg"/>
                                            </div>
                                            <div class="button-text">Actual Overtime to Approve</div>
                                        </button>
                                    </div>
                                
                                </div>
                            </div>
                            <div class="col-md-2 d-flex flex-column">
                                <div class="row" style="padding-bottom:250px">
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="action_none" 
                                            type="object"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_attendance_overtime/static/src/img/leaves.svg"/>
                                            </div>
                                            <div class="button-text">Extra Leave</div>
                                        </button>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="action_none" 
                                            type="object"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_attendance_overtime/static/src/img/payroll.svg"/>
                                            </div>
                                            <div class="button-text">Payroll</div>
                                        </button>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="equip3_hr_attendance_overtime.hr_overtime_actual_analysis_act_window" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_attendance_overtime/static/src/img/reporting.svg"/>
                                            </div>
                                            <div class="button-text">Actual Overtime Analysis</div>
                                        </button>
                                    </div>
                                
                                </div>
                            </div>
                            
                            
                            

                        </div>
                    </div>
                </div>
            </form>
        </field>
    </record>

    <record id="overtime_flow_act_window" model="ir.actions.act_window">
        <field name="name">Overtime Flow</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.overtime.flow</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <record id="overtime_flow_action_client" model="ir.actions.client">
        <field name="name">Overtime Flow</field>
        <field name="tag">overtime_flow_tag</field>
    </record>

    <menuitem 
        id="overtime_flow_menu"
        name="Overtime Flow"
        action="overtime_flow_action_client"
        parent="equip3_hr_attendance_overtime.menu_hr_overtime_root"
        sequence="-1"/>
</odoo>