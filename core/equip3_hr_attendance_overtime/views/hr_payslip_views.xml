<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hr_payslip_extend_overtime_form" model="ir.ui.view">
        <field name="name">hr.payslip.extend.overtime.form</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll_community.view_hr_payslip_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='compute_sheet']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='compute_sheet']" position="after">
                <button string="Compute Sheet" name="confirm_compute_sheet" type="object" states="draft" class="oe_highlight"/>
            </xpath>
        </field>
    </record>

</odoo>