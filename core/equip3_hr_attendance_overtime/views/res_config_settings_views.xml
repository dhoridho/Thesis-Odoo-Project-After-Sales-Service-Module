<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="equip3_hr_attendance_overtime_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.equip3_hr_attendance_overtime</field>
        <field name="model">res.config.settings</field>
        <!-- <field name="priority" eval="70"/> -->
        <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Overtime Approval" string="Overtime Approval" data-key="equip3_hr_attendance_overtime" >
                    <p>
                        <h3 style="text-indent: 15px;">Overtimes</h3>

                    </p>
                    <h2>Overtime Settings</h2>
                    <div class="row mt16 o_settings_container" name="overtime_approval_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="overtime_approval_control_setting" title="Overtime Approval">
                            <div class="content-group">
                                <div class="mt16">
                                    <div class="o_setting_left_pane">
                                        <field name="overtime_approval_matrix"/>
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label for="overtime_approval_matrix" string="Overtime Approval Matrix"/>
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <div class="text-muted">
                                            On/Off switch for approval matrix on Overtime Request and Actual Overtime Request.
                                        </div>
                                    </div>
                                </div>
                                <div class="mt16" attrs="{'invisible':[('overtime_approval_matrix','=',False)]}">
                                    <label for="approval_method" string="Approval Method"/>
                                    <field style="margin-left:10px;" name="approval_method" class="oe_inline" required="1"/>
                                </div>
                                <div class="mt16" attrs="{'invisible':['|', ('overtime_approval_matrix','=',False), ('approval_method','!=','employee_hierarchy')]}">
                                    <label for="approval_levels" string="Approval Levels"/>
                                    <field style="margin-left:16px;" name="approval_levels" class="oe_inline" required="1"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Overtime Rounding Fee</h2>
                    <div class="row mt16 o_settings_container" name="overtime_roundingsetting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="overtime_rounding_control_setting" title="Overtime Rounding Fee">
                            <div class="content-group">
                                <div class="mt16">
                                    <label for="overtime_rounding" string="Rounding"/>
                                    <field style="margin-left:10px;" name="overtime_rounding" class="oe_inline"/>
                                </div>
                                <div class="mt16" attrs="{'invisible':[('overtime_rounding','!=',True)]}">
                                    <label for="overtime_rounding_type" string="Rounding Type"/>
                                    <field style="margin-left:16px;" name="overtime_rounding_type" class="oe_inline" attrs="{'required':[('overtime_rounding','=',True)]}"/>
                                </div>
                                <div class="mt16" attrs="{'invisible':[('overtime_rounding','!=',True)]}">
                                    <label for="overtime_rounding_digit" string="Number of Digit"/>
                                    <field style="margin-left:16px;" name="overtime_rounding_digit" class="oe_inline" attrs="{'required':[('overtime_rounding','=',True)]}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Notification</h2>
                    <div class="row mt16 o_settings_container"
                        name="overtime_notification_setting_wa_container">
                        <div class="col-12 col-lg-6 o_setting_box"
                            id="overtime_notification_wa_setting">
                            <div class="o_setting_left_pane">
                                <field name="send_by_wa_overtimes"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Send By Whatsapp" for="send_by_wa_overtimes"/>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container"
                        name="overtime_notification_setting_email_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="overtime_notification_email_setting">
                            <div class="o_setting_left_pane">
                                <field name="send_by_mail_overtimes"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Send By Email" for="send_by_mail_overtimes"/>
                            </div>
                        </div>
                    </div>
                    <!--                Auto Email Follow Cron-->
                    <div class="row mt16 o_settings_container" name="auto_follow_up_overtime">
                        <div class="col-12 col-lg-6 o_setting_box" id="auto_follow_up_overtime_setting">
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="auto_follow_up_overtime"/>
                                    <label for="auto_follow_up_overtime" string="Auto Follow Up" class="oe_inline"
                                           style="margin-left:10px;"/>
                                </div>
                                <div class="mt16" attrs="{'invisible':[('auto_follow_up_overtime','!=',True)]}">
                                    <label for="interval_number_overtime" string="Execute Every"/>
                                    <div attrs="{'invisible':[('auto_follow_up_overtime','!=',True)]}">
                                        <field name="interval_number_overtime" class="oe_inline"
                                               attrs="{'required':[('auto_follow_up_overtime','=',True)]}"/>
                                        <field name="interval_type_overtime" class="oe_inline"
                                               attrs="{'required':[('auto_follow_up_overtime','=',True)]}"/>
                                    </div>
                                </div>
                                <div class="mt16" attrs="{'invisible':[('auto_follow_up_overtime','!=',True)]}">
                                    <label for="number_of_repetitions_overtime" string="Number of Repetitions"/>
                                    <field name="number_of_repetitions_overtime" class="oe_inline"
                                           attrs="{'required':[('auto_follow_up_overtime','=',True)]}"/>
                                </div>
                            </div>
                        </div>
                    </div>

                    </div>
                <!-- <div class="app_settings_block" data-string="Overtime Approval" string="Overtime Approval" data-key="equip3_hr_attendance_overtime" >
                    <h2>Overtime Rounding Fee</h2>
                    <div class="row mt16 o_settings_container" name="overtime_roundingsetting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="overtime_rounding_control_setting" title="Overtime Rounding Fee">
                            <div class="content-group">
                                <div class="mt16">
                                    <label for="overtime_rounding" string="Rounding"/>
                                    <field style="margin-left:10px;" name="overtime_rounding" class="oe_inline"/>
                                </div>
                                <div class="mt16" attrs="{'invisible':[('overtime_rounding','!=',True)]}">
                                    <label for="overtime_rounding_type" string="Rounding Type"/>
                                    <field style="margin-left:16px;" name="overtime_rounding_type" class="oe_inline" attrs="{'required':[('overtime_rounding','=',True)]}"/>
                                </div>
                                <div class="mt16" attrs="{'invisible':[('overtime_rounding','!=',True)]}">
                                    <label for="overtime_rounding_digit" string="Number of Digit"/>
                                    <field style="margin-left:16px;" name="overtime_rounding_digit" class="oe_inline" attrs="{'required':[('overtime_rounding','=',True)]}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div> -->
                
            </xpath>
        </field>
    </record>

    <record id="equip3_hr_overtime_approval_config_settings_action" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'equip3_hr_attendance_overtime', 'bin_size': False}</field>
    </record>

</odoo>
