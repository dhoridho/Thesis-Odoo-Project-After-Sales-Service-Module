<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="overtime_rules_form_view" model="ir.ui.view">
            <field name="name">equip3.overtime_rules.form</field>
            <field name="model">overtime.rules</field>
            <field name="arch" type="xml">
                <form string="Overtime Rules">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <label for="minimum_time" string="Minimum Time"/>
                                <div>
                                    <field name="minimum_time" nolabel="1" class="oe_inline"/>
                                    Minute(s)
                                </div>
                                <field name="company_id" readonly="1" force_save="1"/>
                                <field name="use_government_rule"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Overtime Rounding">
                                <field name="overtime_rounding_ids">
                                    <tree editable="bottom">
                                        <field name="minutes"/>
                                        <field name="rounding"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Work Days" attrs="{'invisible':[('use_government_rule','=',False)]}">
                                <separator string="Overtime Calculation" />
                                <field name="works_day">
                                    <tree editable="bottom">
                                        <field name="hour"/>
                                        <field name="values" attrs="{'readonly':[('fix_amount','=',True)]}" force_save="1"/>
                                        <field name="fix_amount"/>
                                        <field name="amount" attrs="{'readonly':[('fix_amount','=',False)]}" force_save="1"/>
                                    </tree>
                                </field>
                                <separator string="Overtime Break" />
                                <field name="break_time_work_days">
                                    <tree editable="bottom">
                                        <field name="minimum_hours"/>
                                        <field name="break_time" widget="float_time"/>
                                    </tree>
                                </field>
                                <separator string="Meal Allowance" />
                                <field name="meal_allowance_work_days">
                                    <tree editable="bottom">
                                        <field name="minimum_hours"/>
                                        <field name="meal_allowance"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Off Days (5 Working Days per Week)" attrs="{'invisible':[('use_government_rule','=',False)]}">
                                <separator string="Overtime Calculation" />
                                <field name="off_days_working">
                                    <tree editable="bottom">
                                        <field name="hour"/>
                                        <field name="values" attrs="{'readonly':[('fix_amount','=',True)]}" force_save="1"/>
                                        <field name="fix_amount"/>
                                        <field name="amount" attrs="{'readonly':[('fix_amount','=',False)]}" force_save="1"/>
                                    </tree>
                                </field>
                                <separator string="Overtime Break" />
                                <field name="break_time_offtime_five_days">
                                    <tree editable="bottom">
                                        <field name="minimum_hours"/>
                                        <field name="break_time" widget="float_time"/>
                                    </tree>
                                </field>
                                <separator string="Meal Allowance" />
                                <field name="meal_allowance_offtime_five_days">
                                    <tree editable="bottom">
                                        <field name="minimum_hours"/>
                                        <field name="meal_allowance"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Off Days (6 Working Days per Week)" attrs="{'invisible':[('use_government_rule','=',False)]}">
                                <separator string="Overtime Calculation" />
                                <field name="off_days_working_per_week">
                                    <tree editable="bottom">
                                        <field name="hour"/>
                                        <field name="values" attrs="{'readonly':[('fix_amount','=',True)]}" force_save="1"/>
                                        <field name="fix_amount"/>
                                        <field name="amount" attrs="{'readonly':[('fix_amount','=',False)]}" force_save="1"/>
                                    </tree>
                                </field>
                                <separator string="Overtime Break" />
                                <field name="break_time_offtime_six_days">
                                    <tree editable="bottom">
                                        <field name="minimum_hours"/>
                                        <field name="break_time" widget="float_time"/>
                                    </tree>
                                </field>
                                <separator string="Meal Allowance" />
                                <field name="meal_allowance_offtime_six_days">
                                    <tree editable="bottom">
                                        <field name="minimum_hours"/>
                                        <field name="meal_allowance"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Public Holidays (Short Day)" attrs="{'invisible':[('use_government_rule','=',False)]}">
                                <separator string="Overtime Calculation" />
                                <field name="off_days_public_holiday">
                                    <tree editable="bottom">
                                        <field name="hour"/>
                                        <field name="values" attrs="{'readonly':[('fix_amount','=',True)]}"/>
                                        <field name="fix_amount"/>
                                        <field name="amount" attrs="{'readonly':[('fix_amount','=',False)]}"/>
                                    </tree>
                                </field>
                                <separator string="Overtime Break" />
                                <field name="break_time_off_public_holiday">
                                    <tree editable="bottom">
                                        <field name="minimum_hours"/>
                                        <field name="break_time" widget="float_time"/>
                                    </tree>
                                </field>
                                <separator string="Meal Allowance" />
                                <field name="meal_allowance_off_public_holiday">
                                    <tree editable="bottom">
                                        <field name="minimum_hours"/>
                                        <field name="meal_allowance"/>
                                    </tree>
                                </field>
                            </page>

                            <!-- Start Non Government Rules-->
                            <page string="Work Days" attrs="{'invisible':[('use_government_rule','=',True)]}">
                                <separator string="Overtime Calculation" />
                                <field name="rules_line_ids">
                                    <tree editable="bottom">
                                        <field name="interval" widget="float_time"/>
                                        <field name="amount"/>
                                    </tree>
                                </field>
                                <separator string="Overtime Break" />
                                <field name="break_overtime_rules_line_ids">
                                    <tree editable="bottom">
                                        <field name="minimum_hours"/>
                                        <field name="break_time" widget="float_time"/>
                                    </tree>
                                </field>
                                <separator string="Meal Allowance" />
                                <field name="meal_allowance_rules_line_ids">
                                    <tree editable="bottom">
                                        <field name="minimum_hours"/>
                                        <field name="meal_allowance"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Off Days (5 Working Days per Week)" attrs="{'invisible':[('use_government_rule','=',True)]}">
                                <separator string="Overtime Calculation" />
                                <field name="off_days_five_ids">
                                    <tree editable="bottom">
                                        <field name="interval" widget="float_time"/>
                                        <field name="amount"/>
                                    </tree>
                                </field>
                                <separator string="Overtime Break" />
                                <field name="break_off_five_ids">
                                    <tree editable="bottom">
                                        <field name="minimum_hours"/>
                                        <field name="break_time" widget="float_time"/>
                                    </tree>
                                </field>
                                <separator string="Meal Allowance" />
                                <field name="meal_allowance_off_five_ids">
                                    <tree editable="bottom">
                                        <field name="minimum_hours"/>
                                        <field name="meal_allowance"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Off Days (6 Working Days per Week)" attrs="{'invisible':[('use_government_rule','=',True)]}">
                                <separator string="Overtime Calculation" />
                                <field name="off_days_six_ids">
                                    <tree editable="bottom">
                                        <field name="interval" widget="float_time"/>
                                        <field name="amount"/>
                                    </tree>
                                </field>
                                <separator string="Overtime Break" />
                                <field name="break_off_six_ids">
                                    <tree editable="bottom">
                                        <field name="minimum_hours"/>
                                        <field name="break_time" widget="float_time"/>
                                    </tree>
                                </field>
                                <separator string="Meal Allowance" />
                                <field name="meal_allowance_off_six_ids">
                                    <tree editable="bottom">
                                        <field name="minimum_hours"/>
                                        <field name="meal_allowance"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Public Holidays (Short Day)" attrs="{'invisible':[('use_government_rule','=',True)]}">
                                <separator string="Overtime Calculation" />
                                <field name="off_days_public_ids">
                                    <tree editable="bottom">
                                        <field name="interval" widget="float_time"/>
                                        <field name="amount"/>
                                    </tree>
                                </field>
                                <separator string="Overtime Break" />
                                <field name="break_off_public_ids">
                                    <tree editable="bottom">
                                        <field name="minimum_hours"/>
                                        <field name="break_time" widget="float_time"/>
                                    </tree>
                                </field>
                                <separator string="Meal Allowance" />
                                <field name="meal_allowance_off_public_ids">
                                    <tree editable="bottom">
                                        <field name="minimum_hours"/>
                                        <field name="meal_allowance"/>
                                    </tree>
                                </field>
                            </page>
                            <!-- End Non Government Rules-->

                            <page string="Overtime Limitation">
                                <group name="overtime_limitation" string="Overtime Limitation Configuration">
                                    <field name="is_use_ovt_limit"/>
                                    <label for="ovt_limit_day" string="Limit in a Day" attrs="{'invisible':[('is_use_ovt_limit','!=',True)]}"/>
                                    <div attrs="{'invisible':[('is_use_ovt_limit','!=',True)]}">
                                        <field name="ovt_limit_day" nolabel="1" class="oe_inline" widget="float_time" attrs="{'required':[('is_use_ovt_limit','=',True)]}"/>
                                        Hours/Day
                                    </div>
                                    <label for="ovt_limit_week" string="Limit in a Week" attrs="{'invisible':[('is_use_ovt_limit','!=',True)]}"/>
                                    <div attrs="{'invisible':[('is_use_ovt_limit','!=',True)]}">
                                        <field name="ovt_limit_week" nolabel="1" class="oe_inline" widget="float_time" attrs="{'required':[('is_use_ovt_limit','=',True)]}"/>
                                        Hours/Week
                                    </div>
                                </group>
                            </page>

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="overtime_rules_tree_view" model="ir.ui.view">
            <field name="name">overtime.rules.tree</field>
            <field name="model">overtime.rules</field>
            <field name="arch" type="xml">
                <tree string="Overtime Rules">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="minimum_time"/>
                </tree>
            </field>
        </record>

        <record id="overtime_rules_search_view" model="ir.ui.view">
            <field name="name">equip3.overtime_rules.search</field>
            <field name="model">overtime.rules</field>
            <field name="arch" type="xml">
                <search string="Overtime Rules">
                    <field name="name"/>
                    <field name="code"/>
                </search>
            </field>
        </record>

        <record id="overtime_rules_act_window" model="ir.actions.act_window">
            <field name="name">Overtime Rules</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">overtime.rules</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click Create to add new Overtime Rules.
                </p>
            </field>
        </record>

    </data>
</odoo>