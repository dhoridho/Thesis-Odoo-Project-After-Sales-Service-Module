        <record  model="ir.actions.server" id="overtime_requests_approval_act_window">
            <field name="name">Overtime Request to Approve</field>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="model_id" ref="model_hr_overtime_request"/>
