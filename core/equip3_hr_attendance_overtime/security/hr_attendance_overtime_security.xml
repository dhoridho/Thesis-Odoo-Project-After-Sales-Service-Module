<odoo>
<data>

    <record id="equip3_hr_attendance_overtime.module_category_overtime" model="ir.module.category">
        <field name="name">Overtime</field>
        <field name="parent_id" ref="base.module_category_human_resources"></field>
        <field name="sequence">16</field>
    </record>

    <record id="equip3_hr_attendance_overtime.group_overtime_self_service" model="res.groups">
        <field name="name">Self Service</field>
        <field name="category_id" ref="equip3_hr_attendance_overtime.module_category_overtime"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>



    <record id="equip3_hr_attendance_overtime.group_overtime_team_approver" model="res.groups">
        <field name="name">Supervisor</field>
        <field name="category_id" ref="equip3_hr_attendance_overtime.module_category_overtime"/>
        <field name="implied_ids" eval="[(4, ref('equip3_hr_attendance_overtime.group_overtime_self_service'))]"/>
    </record>


    <record id="equip3_hr_attendance_overtime.group_overtime_all_approver" model="res.groups">
        <field name="name">HR Manager</field>
        <field name="category_id" ref="equip3_hr_attendance_overtime.module_category_overtime"/>
        <field name="implied_ids" eval="[(4, ref('equip3_hr_attendance_overtime.group_overtime_team_approver'))]"/>
    </record>

    <record id="equip3_hr_attendance_overtime.group_overtime_admin" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="equip3_hr_attendance_overtime.module_category_overtime"/>
        <field name="implied_ids" eval="[(4, ref('equip3_hr_attendance_overtime.group_overtime_all_approver'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>



</data>


</odoo>