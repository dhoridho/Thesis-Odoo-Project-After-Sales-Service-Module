<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="payslip_compute_sheet_wizard_form" model="ir.ui.view">
        <field name="name">payslip.compute.sheet.wizard.form</field>
        <field name="model">payslip.compute.sheet.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirmation Message">
                <sheet>
                    <field name="message" nolabel="1" readonly="1" widget="html"/>
                </sheet>
                <footer>
                    <field name="is_batch" invisible="1"/>
                    <button name="action_continue" type="object" string="Continue" class="oe_highlight" attrs="{'invisible': [('is_batch','=',True)]}"/>
                    <button name="action_continue_batch" type="object" string="Continue" class="oe_highlight" attrs="{'invisible': [('is_batch','=',False)]}"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="payslip_compute_sheet_wizard_action" model="ir.actions.act_window">
        <field name="name">Confirmation Message</field>
        <field name="res_model">payslip.compute.sheet.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    </data>
</odoo>
