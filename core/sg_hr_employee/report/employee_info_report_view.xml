<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="employee_information_report">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                          <br/><br/>
                            <!-- Employee name -->
                            <div style="background-color:#98bdf2;hight:100px" class='padding'>
                                <h4><center><b>Employee Name : <span t-field="o.name"/></b></center></h4>
                            </div>
                            <br/>

                            <!-- Information of employee's Department, Expense and Leave Manager -->
                            <table width="50%">
                                <tr style="font-size:12px;" class='padding'>
                                    <th width="15%">Department</th>
                                    <th width="5%" align="center">:</th>
                                    <td width="30%"><span t-field="o.department_id and o.department_id.name" /></td>
                                </tr>
                                <tr style="font-size:12px;">
                                    <th width="15%">Expense Manager</th>
                                    <th width="5%" align="center">:</th>
                                    <td width="30%"><span t-field="o.parent_id and o.parent_id.name" /></td>
                                </tr>
                                <tr style="font-size:12px;">
                                    <th width="15%">Leave Manager</th>
                                    <th width="5%" align="center">:</th>
                                    <td width="30%"><span t-field="o.leave_manager and o.leave_manager.name" /></td>
                                </tr>
                            </table>
                            <br/>

                            <!-- Table of Employee's Personal Information -->
                            <div style="background-color: #98bdf2;hight:100px" class='padding'>
                                <h4><center><b>Personal Information</b></center></h4>
                            </div>
                            <table width="100%">
                                <tr class='padding'>
                                    <td width="50%" style="color:#0d43a8;"><b>Social IDs</b></td>
                                    <td width="50%" style="color:#0d43a8;"><b>Status</b></td>
                                </tr>
                                <tr class='padding' style="font-size:12px;">
                                    <td colspan="2">
                                        <table width="100%">
                                            <tr style="font-size:12px;" class='padding'>
                                                <th width="15%">Identification</th>
                                                <th width="5%" align="center">:</th>
                                                <td width="30%"><span t-field="o.identification_id" /></td>
                                                <th width="15%">Gender</th>
                                                <th width="5%" align="center">:</th>
                                                <td width="30%"><span t-field="o.gender" /></td>
                                            </tr>
                                            <tr style="font-size:12px;" class='padding'>
                                                <th width="15%">Passport No</th>
                                                <th width="5%" align="center">:</th>
                                                <td width="30%"><span t-field="o.passport_id" /></td>
                                                <th width="15%">Marital status</th>
                                                <th width="5%" align="center">:</th>
                                                <td width="30%"><span t-field="o.marital" /></td>
                                            </tr>
                                            <tr style="font-size:12px;" class='padding'>
                                                <th width="15%"></th>
                                                <th width="5%" align="center"></th>
                                                <td width="30%"></td>
                                                <th width="15%">Nationality</th>
                                                <th width="5%" align="center">:</th>
                                                <td width="30%"><span t-field="o.country_id" /></td>
                                            </tr>
                                            <tr style="font-size:12px;" class='padding'>
                                                <th width="15%"></th>
                                                <th width="5%"></th>
                                                <td width="30%"></td>
                                                <th width="15%">Date of Birth</th>
                                                <th width="5%" align="center">:</th>
                                                <td width="30%">
                                                    <span t-if="o.birthday">
                                                        <span t-field="o.birthday"/>
                                                    </span>
                                                </td>
                                            </tr>
                                            <tr style="font-size:12px;" class='padding'>
                                                <th width="15%"></th>
                                                <th width="5%"></th>
                                                <td width="30%"></td>
                                                <th width="15%">Place of Birth</th>
                                                <th width="5%" align="center">:</th>
                                                <td width="30%"><span t-field="o.place_of_birth" /></td>
                                            </tr>
                                            <tr style="font-size:12px;" class='padding'>
                                                <th width="15%"></th>
                                                <th width="5%"></th>
                                                <td width="30%"></td>
                                                <th width="15%">Age</th>
                                                <th width="5%" align="center">:</th>
                                                <td width="30%"><span t-field="o.age" /></td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                            <br/>
                            <table width="100%">
                                <tr class='padding'>
                                    <td width="50%" style="color:#0d43a8;">
                                        <b>Contact Information</b>
                                    </td>
                                    <td width="50%" style="color:#0d43a8;">
                                        <b>Other Information</b>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <table width="100%">
                                            <tr style="font-size:12px;" class='padding'>
                                                <th width="20%">Home Address</th>
                                                <th width="5%" align="center">:</th>
                                                <td width="30%"><span t-field="o.address_home_id" /></td>
                                            </tr>
                                            <tr style="font-size:12px;" class='padding'>
                                                <th width="15%">Country</th>
                                                <th width="5%" align="center">:</th>
                                                <td width="30%"><span t-field="o.emp_country_id and o.emp_country_id.name" /></td>
                                            </tr>
                                            <tr style="font-size:12px;" class='padding'>
                                                <th width="15%">State</th>
                                                <th width="5%" align="center">:</th>
                                                <td width="30%"><span t-field="o.emp_state_id and o.emp_state_id.name"/></td>
                                            </tr>
                                            <tr style="font-size:12px;" class='padding'>
                                                <th width="15%">City</th>
                                                <th width="5%" align="center">:</th>
                                                <td width="30%"><span t-field="o.emp_city_id and o.emp_city_id.name"/></td>
                                            </tr>
                                            <tr style="font-size:12px;" class='padding'>
                                                <th width="15%">Phone</th>
                                                <th width="5%" align="center">:</th>
                                                <td width="30%"><span t-field="o.work_phone" /></td>
                                            </tr>
                                            <tr style="font-size:12px;" class='padding'>
                                                <th width="15%">Mobile</th>
                                                <th width="5%" align="center">:</th>
                                                <td width="30%"><span t-field="o.mobile_phone" /></td>
                                            </tr>
                                            <tr style="font-size:12px;" class='padding'>
                                                <th width="15%">E-mail</th>
                                                <th width="5%" align="center">:</th>
                                                <td width="30%"><span t-field="o.work_email" /></td>
                                            </tr>
                                        </table>
                                    </td>
                                    <td>
                                        <table width="100%">
                                            <tr style="font-size:12px;" class='padding'>
                                                <th width="15%">Dialect</th>
                                                <th width="5%" align="center">:</th>
                                                <td width="30%"><span t-field="o.dialect" /></td>
                                            </tr>
                                            <tr style="font-size:12px;" class='padding'>
                                                <th width="15%">Driving Licence</th>
                                                <th width="5%" align="center">:</th>
                                                <td width="30%"><span t-field="o.driving_licence" /></td>
                                            </tr>
                                            <tr style="font-size:12px;" class='padding'>
                                                <th width="15%">Type of IDs</th>
                                                <th width="5%" align="center">:</th>
                                                <td width="30%"><span t-field="o.employee_type_id.name"/></td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                            <br/>
                            <!-- Table of Employee's Computer Education -->
                            <div style="page-break-inside: avoid;">
                                <t t-if="o.education_info_line">
                                    <br/>
                                    <div style="background-color: #98bdf2;hight:100px" class='padding'>
                                        <h4><center><b>Educational Information</b></center></h4>
                                    </div>
                                    <div class="container">
                                        <table class="table table-sm">
                                            <thead>
                                                <tr style="font-size:12px;">
                                                    <th width="15%">Computer Program Knowledge</th>
                                                    <th width="15%">Shorthand</th>
                                                    <th width="15%">Courses Taken</th>
                                                    <th width="15%">Typing</th>
                                                    <th width="15%">Other Knowledge and Skill</th>
                                                </tr>
                                            </thead>
                                            <t t-foreach="o.education_info_line" t-as="line">
                                                <tbody>
                                                    <tr style="font-size:12px;">
                                                        <td>
                                                            <t t-if="line.comp_prog_knw">
                                                                <span width="30%" t-field='line.comp_prog_knw'/>
                                                            </t>
                                                        </td>
                                                        <td>
                                                            <t t-if="line.shorthand">
                                                                <span width="30%" t-field='line.shorthand'/>
                                                            </t>
                                                        </td>
                                                        <td>
                                                            <t t-if="line.course">
                                                                <span width="30%" t-field='line.course'/>
                                                            </t>
                                                        </td>
                                                        <td>
                                                            <t t-if="line.typing">
                                                                <span width="30%" t-field='line.typing'/>
                                                            </t>
                                                        </td>
                                                        <td>
                                                            <t t-if="line.other_know">
                                                                <span width="30%" t-field='line.other_know'/>
                                                            </t>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </t>
                                        </table>
                                    </div>
                                </t>
                            </div>
                            <!-- Employee's Job Information -->
                            <div style="page-break-inside: avoid;">
                                <br/>
                                <div style="background-color:#98bdf2;hight:100px" class='padding'>
                                    <h4><center><b>Job</b></center></h4>
                                </div>
                                <table width="100%">
                                    <tr style="font-size:12px;" class='padding'>
                                        <th width="20%">Job</th>
                                        <th width="5" align="center">:</th>
                                        <td width="25%"><span t-field="o.job_id and o.job_id.name" /></td>
                                        <th width="15%">Join Date</th>
                                        <th width="5" align="center">:</th>
                                        <td width="30%">
                                            <span t-if="o.join_date">
                                                <span t-field="o.join_date" />
                                            </span>
                                        </td>
                                    </tr>
                                    <tr style="font-size:12px;" class='padding'>
                                        <th width="20%">Employment Status</th>
                                        <th width="5" align="center">:</th>
                                        <td width="25%"><span t-field="o.emp_status" /></td>
                                        <th width="15%"></th>
                                        <th width="5"></th>
                                        <td width="30%"></td>
                                    </tr>
                                    <tr style="font-size:12px;" class='padding'>
                                        <th width="20%">Confirm Date</th>
                                        <th width="5" align="center">:</th>
                                        <td width="25%">
                                            <span t-if="o.confirm_date">
                                                <span t-field="o.confirm_date" />
                                            </span>
                                        </td>
                                        <th width="15%"></th>
                                        <th width="5"></th>
                                        <td width="35%"></td>
                                    </tr>
                                </table>
                                <!-- Information of Employee's Job Histories -->
                                <t t-if="o.history_ids" style="page-break-inside: avoid">
                                    <br/>
                                    <div class="container">
                                        <div>
                                          <td width="50%" style="color:#0d43a8;">
                                            <b>History of Employee</b>
                                          </td>
                                        </div>
                                        <table class="table table-sm">
                                             <thead>
                                                <tr style="font-size:12px;">
                                                    <th width="20%">job</th>
                                                    <th width="20%">Employment Status</th>
                                                    <th width="20%">Join Date</th>
                                                    <th width="20%">Confirmation Date</th>
                                                    <th width="20%">Date Changed</th>
                                                    <th width="20%">Changed By</th>
                                                </tr>
                                            </thead>
                                            <t t-foreach="o.history_ids" t-as="emp_hist">
                                                <tbody>
                                                    <tr style="font-size:12px;">
                                                        <td>
                                                            <span width="25%" t-esc="emp_hist.job_id and emp_hist.job_id.id and emp_hist.job_id.name or False" />
                                                        </td>
                                                        <td>
                                                            <span width="25%" t-esc="emp_hist.emp_status" />
                                                        </td>
                                                        <td>
                                                            <span width="25%" t-if="emp_hist.join_date">
                                                                <span width="25%"  t-field="emp_hist.join_date"/>
                                                            </span>
                                                        </td>
                                                        <td>
                                                            <span width="25%" t-if="emp_hist.confirm_date">
                                                                <span width="25%"  t-field="emp_hist.confirm_date"/>
                                                            </span>
                                                        </td>
                                                        <td>
                                                            <span width="25%" t-if="emp_hist.date_changed">
                                                              <span width="25%"  t-field="emp_hist.date_changed"/>
                                                            </span>
                                                        </td>
                                                        <td>
                                                            <span t-if="emp_hist.user_id">
                                                                <span width="25%" t-esc="emp_hist.user_id and emp_hist.user_id.name" />
                                                            </span>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </t>
                                        </table>
                                    </div>
                                </t>
                            </div>
                            <!-- Information of Employee's Categories -->
                            <div style="page-break-inside: avoid;">
                                <br/>
                                <t t-if="o.category_ids">
                                    <div style="background-color:#98bdf2;hight:100px" class='padding'>
                                        <h4><center><b>Categories</b></center></h4>
                                    </div>
                                    <table class="table table-sm">
                                         <thead>
                                            <tr>
                                                <td width="50%" style="color:#0d43a8;">
                                                    <b>Categories Name</b>
                                                </td>
                                            </tr>
                                        </thead>
                                        <t style="font-size:12px;" t-foreach="o.category_ids" t-as="cat">
                                            <tbody>
                                                <tr style="font-size:12px;">
                                                    <td>
                                                        <t t-if="cat.name">
                                                            <span width="25%" t-field='cat.name'/>
                                                        </t>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </t>
                                    </table>
                                </t>
                            </div>
                            <!-- Table contain information of employee's Immigration Details -->
                            <div style="page-break-inside: avoid;">
                                <br/>
                                <t t-if="o.immigration_ids">
                                    <div style="background-color:#98bdf2;hight:100px" class='padding'>
                                        <h4><center><b>Immigration</b></center></h4>
                                    </div>
                                    <div class="container">
                                        <table class="table table-sm">
                                             <thead>
                                                <tr style="font-size:12px;">
                                                    <th width="20%">Documents</th>
                                                    <th width="20%">Number</th>
                                                    <th width="20%">Issue Date</th>
                                                    <th width="20%">Expire Date</th>
                                                    <th width="20%">Eligible Status</th>
                                                    <th width="20%">Eligible Review Date</th>
                                                    <th width="20%">Issued By</th>
                                                </tr>
                                            </thead>
                                            <t t-foreach="o.immigration_ids" t-as="emp_immg">
                                                <tbody>
                                                    <tr style="font-size:12px;">
                                                        <td>
                                                            <span width="25%" t-esc="emp_immg.documents" />
                                                        </td>
                                                        <td>
                                                            <span width="25%" t-esc="emp_immg.number" />
                                                        </td>
                                                        <td>
                                                            <span width="25%" t-if="emp_immg.issue_date">
                                                                <span width="25%"  t-field="emp_immg.issue_date"/>
                                                            </span>
                                                        </td>
                                                        <td>
                                                            <span width="25%" t-if="emp_immg.exp_date">
                                                                <span width="25%"  t-field="emp_immg.exp_date"/>
                                                            </span>
                                                        </td>
                                                        <td>
                                                            <span width="25%" t-if="emp_immg.eligible_status">
                                                                <span t-esc="emp_immg.eligible_status" />
                                                            </span>
                                                        </td>
                                                        <td>
                                                            <span t-if="emp_immg.eligible_review_date">
                                                                <span width="25%"  t-field="emp_immg.eligible_review_date"/>
                                                            </span>
                                                        </td>
                                                        <td>
                                                            <t t-if="emp_immg.issue_by">
                                                                <span width="25%" t-esc="emp_immg.issue_by and emp_immg.issue_by.name" />
                                                            </t>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </t>
                                        </table>
                                    </div>
                                </t>
                            </div>
                            <!-- This table contain information of Employee's training or workshop details -->
                            <div style="page-break-inside: avoid;" id="training_workshop">
                                <t t-if="o.training_ids">
                                    <div style="background-color:#98bdf2;hight:100px" class='padding'>
                                        <h4><center><b>Training Workshop</b></center></h4>
                                    </div>
                                    <div class="container">
                                        <table class="table table-sm">
                                             <thead>
                                                <tr style="font-size:12px;">
                                                    <th width="20%">Title of TRAINING/WORKSHOP</th>
                                                    <th width="20%">Institution</th>
                                                    <th width="20%">Date</th>
                                                </tr>
                                            </thead>
                                            <t t-foreach="o.training_ids" t-as="emp_training">
                                                <tbody>
                                                    <tr style="font-size:12px;">
                                                        <td width="20%"   >
                                                            <span t-esc="emp_training.tr_title" />
                                                        </td>
                                                        <td width="20%">
                                                            <span t-esc="emp_training.tr_institution" />
                                                        </td>
                                                        <td width="20%">
                                                            <span t-if="emp_training.tr_date">
                                                                <span width="20%" t-field="emp_training.tr_date"/>
                                                            </span>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </t>
                                        </table>
                                    </div>
                                </t>
                            </div>
                            <!-- This table contain exta informations of employee -->
                            <div style="page-break-inside: avoid;">
                                <div style="background-color:#98bdf2;hight:100px" class='padding'>
                                    <h4><center><b>Extra Information</b></center></h4>
                                </div>
                                <div>
                                    <td width="50%" style="color:#0d43a8;"><b>Health Condition:</b></td>
                                </div>
                                <div>
                                    <p style="font-size:12px;"><b>
                                    ∙ Are you suffering from any physical disability
                                    or
                                    illness that requires you to be medication for a
                                    prolonged
                                    period?</b></p>
                                </div>
                                <div>
                                    <table width="100%">
                                        <tr style="font-size:12px;">
                                            <td width="8%">Yes</td>
                                            <td width="2%" align="center">:</td>
                                            <td width="40%"><span t-esc="o.physical_stability" /></td>
                                            <td width="8%">No</td>
                                            <td width="2%" align="center">:</td>
                                            <td width="40%"><span t-esc="o.physical_stability_no" /></td>
                                        </tr>
                                        <t t-if="o.physical">
                                            <tr style="text-indent: 12px;">
                                                <td>If Yes</td>
                                                <td>:</td>
                                                <td>
                                                    <span t-field='o.physical'/>
                                                </td>
                                            </tr>
                                        </t>
                                    </table>
                                </div>
                                <br/>
                                <div>
                                    <td width="50%" style="color:#0d43a8;"><b>Important Information:</b></td>
                                </div>
                                <div>
                                    <p style="font-size:12px;"><b>
                                    ∙ Have you ever been convicted in a court of law
                                    in
                                    any country?</b></p>
                                </div>
                                <div>
                                    <table width="100%">
                                        <tr style="font-size:12px;">
                                            <td width="8%">Yes</td>
                                            <td width="2%" align="center">:</td>
                                            <td width="40%"><span t-esc="o.court_b" /></td>
                                            <td width="8%">No</td>
                                            <td width="2%" align="center">:</td>
                                            <td width="40%"><span t-esc="o.court_no" /></td>
                                        </tr>
                                        <t t-if="o.court">
                                            <tr style="text-indent: 15px;">
                                                <td>If Yes</td>
                                                <td>:</td>
                                                <td>
                                                    <span t-field='o.court'/>
                                                </td>
                                            </tr>
                                        </t>
                                    </table>
                                </div>
                                <br/>
                                <div>
                                    <p style="font-size:12px;"><b>
                                    ∙ Have you ever been dismissed or suspended from employment ?</b></p>
                                </div>
                                <div>
                                    <table width="100%">
                                        <tr style="font-size:12px;">
                                            <td width="8%">Yes</td>
                                            <td width="2%" align="center">:</td>
                                            <td width="40%"><span t-esc="o.dismissed_b" /></td>
                                            <td width="8%">No</td>
                                            <td width="2%" align="center">:</td>
                                            <td width="40%"><span t-esc="o.dismissed_no" /></td>
                                        </tr>
                                        <t t-if="o.dismiss">
                                            <tr style="font-size:12px;">
                                                <td>If Yes</td>
                                                <td>:</td>
                                                <td>
                                                    <span t-field='o.dismiss'/>
                                                </td>
                                            </tr>
                                        </t>
                                    </table>
                                </div>
                                <br/>
                                <div>
                                    <p style="font-size:12px;"><b>
                                    ∙ Have you ever been declared a bankrupt?</b></p>
                                </div>
                                <div>
                                    <table width="100%">
                                        <tr style="font-size:12px;">
                                            <td width="8%">Yes</td>
                                            <td width="2%" align="center">:</td>
                                            <td width="40%"><span t-esc="o.dismissed_b" /></td>
                                            <td width="8%">No</td>
                                            <td width="2%" align="center">:</td>
                                            <td width="40%"><span t-esc="o.dismissed_no" /></td>
                                        </tr>
                                        <t t-if="o.bankrupt">
                                            <tr style="font-size:12px;">
                                                <td>If Yes</td>
                                                <td>:</td>
                                                <td>
                                                    <span t-field='o.bankrupt'/>
                                                </td>
                                            </tr>
                                        </t>
                                    </table>
                                </div>
                                <t t-if="o.about">
                                    <table width="100%">
                                        <tr style="font-size:12px;">
                                            <th>∙ About Yourself :</th>
                                        </tr>
                                        <tr style="font-size:12px;">
                                            <td>
                                                <span t-esc="o.about" />
                                            </td>
                                        </tr>
                                    </table>
                                </t>
                            </div>
                            <!-- This table contain bank details of employee -->
                            <div style="page-break-inside: avoid;">
                                <br/>
                                <t t-if="o.bank_account_id">
                                    <div style="background-color:#98bdf2;hight:100px" class='padding'>
                                        <h4><center><b>Bank Details</b></center></h4>
                                    </div>
                                    <div class="container">
                                        <table class="table table-sm">
                                             <thead>
                                                <tr style="font-size:12px;">
                                                    <th width="20%">Name of Bank</th>
                                                    <th width="20%">Bank Code</th>
                                                    <th width="20%">Bank Account Number</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr style="font-size:12px;">
                                                    <td>
                                                        <t t-if="o.bank_account_id.bank_id">
                                                            <span
