<?xml version="1.0"?>
<odoo>

    <!-- Patient Dental Procedures View -->
    <record id="view_acs_dental_procedure_list" model="ir.ui.view">
        <field name="name">acs.dental.procedure.list</field>
        <field name="model">acs.dental.procedure</field>
        <field name="arch" type="xml">
            <tree string="Dental Procedure" decoration-info="state=='scheduled'" decoration-muted="state=='cancel'" decoration-danger="state=='done' and (invoice_id==False)">
                <field name="name"/>
                <field name="patient_id"/>
                <field name="product_id"/>
                <field name="tooth_id"/>
                <field name="tooth_surface_ids" widget="many2many_tags"/>
                <field name="price_unit"/>
                <field name="physician_id"/>
                <field name="date"/>
                <field name="state"/>
                <field name="invoice_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_acs_dental_procedure_form" model="ir.ui.view">
        <field name="name">acs.dental.procedure.form</field>
        <field name="model">acs.dental.procedure</field>
        <field name="arch" type="xml">
             <form string="Dental Procedure">
                <header>
                    <button name="action_schedule" string="Schedule" type="object" states="cancel"/>
                    <button name="action_running" string="Running" type="object" states="scheduled" class="oe_highlight"/>
                    <button name="action_done" string="Done" type="object" states="running" class="oe_highlight" groups="acs_hms.group_hms_jr_doctor"/>
                    <button name="action_cancel" string="Cancel" type="object" states="scheduled"/>
                    <button name="action_create_invoice" string="Create Invoice" type="object" attrs="{'invisible': [('invoice_id','!=',False)]}" class="oe_highlight" groups="account.group_account_invoice"/>
                    <button name="view_invoice" string="View Invoice" type="object" attrs="{'invisible': [('invoice_id','=',False)]}" class="oe_highlight" groups="account.group_account_invoice"/>
                    <field name="state" widget="statusbar" statusbar_visible="scheduled,running,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="tooth_id"/>
                            <field name="tooth_surface_ids" widget="many2many_tags"/>
                            <field name="date"/>
                            <field name="diseas_id"/>
                            <field name="treatment_id"/>
                        </group>
                        <group>
                            <field name="physician_id"/>
                            <field name="product_id" context="{'default_type': 'service', 'default_hospital_product_type': 'dental'}"/>
                            <field name="price_unit"/>
                            <field name="invoice_id"/>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                            <field name="appointment_ids" widget="many2many_tags" domain="[('patient_id','=',patient_id)]"/>
                        </group>
                    </group>
                    <field name="description"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_acs_dental_procedure_search" model="ir.ui.view">
        <field name="name">acs.dental.procedure.search</field>
        <field name="model">acs.dental.procedure</field>
        <field name="arch" type="xml">
            <search string="ACS Dental Procedure">
                <field name="name"/>
                <field name="patient_id"/>
                <field name="physician_id"/>
                <field name="product_id"/>
                <field name="appointment_ids"/>
                <separator/>
                <filter name="my_procedures" string="My Dental Procedure" domain="[('physician_id.user_id', '=',uid)]"/>
                <separator/>
                <filter name="not_done" string="Not Done" domain="[('state','!=','done')]"/>
                <filter name="scheduled" string="Schedule" domain="[('state','=','scheduled')]"/>
                <group expand="0" string="Group By...">
                    <filter name="group_by_physician_id" string="Physician" domain="[]" context="{'group_by':'physician_id'}"/>
                    <filter name="group_by_patient" string="Patient" domain="[]" context="{'group_by':'patient_id'}"/>
                    <filter name="group_by_product" string="Procedures" domain="[]" context="{'group_by':'product_id'}"/>
                    <filter name="group_by_date" string="Date" domain="[]" context="{'group_by':'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_acs_dental_procedure_calendar" model="ir.ui.view">
        <field name="name">acs.dental.procedure.calendar</field>
        <field name="model">acs.dental.procedure</field>
        <field name="type">calendar</field>
        <field name="arch" type="xml">
            <calendar string="Dental Procedures" color="product_id" date_start="date">
                <field name="physician_id"/>
                <field name="patient_id"/>
            </calendar>
        </field>
    </record>

    <record id="view_vaccination_pivot" model="ir.ui.view">
        <field name="name">acs.dental.procedure.pivot</field>
        <field name="model">acs.dental.procedure</field>
        <field name="arch" type="xml">
            <pivot string="Dental Procedure">
                <field name="date" type="row"/>
                <field name="physician_id" type="row"/>
                <field name="patient_id" type="row"/>
            </pivot>
        </field>
    </record>

    <record id="action_acs_dental_procedure" model="ir.actions.act_window">
        <field name="name">Patient Dental Procedures</field>
        <field name="res_model">acs.dental.procedure</field>
        <field name="view_mode">tree,form,calendar,pivot</field>
        <field name="context">{'search_default_not_done': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to add a Patient Dental Procedure.
            </p>
        </field>
    </record>

</odoo>