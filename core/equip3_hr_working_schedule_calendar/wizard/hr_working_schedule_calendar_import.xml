<odoo>
    <record id="view_hr_working_schedule_calendar_import" model="ir.ui.view">
        <field name="name">hr.working.schedule.calendar.import.form</field>
        <field name="model">hr.working.schedule.calendar.import</field>
        <field name="arch" type="xml">
            <form>
                <div class="d-inline-flex" id="download_employee_working_calendar_template">
                    <p>Download Import Employee Working Calendar</p>
                    <div class="" role="alert" style="margin-left: 10px; margin-top: 0px;">
                        <a
                            href="/equip3_hr_working_schedule_calendar/static/sample_data/Employee_Working_Calendar_Import_Template.xlsx"
                            target="_blank">
                            <strong>Import Employee Working Calendar Template</strong>
                        </a>
                    </div>
                </div>
                <br/>
                <group>
                    <group>
                        <field name="import_file" filename="import_name"/>
                        <field name="import_name" invisible="1"/>
                    </group>
                </group>
                <footer>
                    <button name="action_import" string="Import" type="object" default_focus="1" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    
    <record model="ir.actions.act_window" id="action_hr_working_schedule_calendar_import">
        <field name="name">Import Employee Working Calendar</field>
        <field name="res_model">hr.working.schedule.calendar.import</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_hr_working_schedule_calendar_import"/>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

    <menuitem action="action_hr_working_schedule_calendar_import" 
            id="menu_hr_working_schedule_calendar_import" 
            parent="hr_attendance.menu_hr_attendance_root" 
            groups="equip3_hr_employee_access_right_setting.group_hr_attendance_hr_manager" 
            sequence="21"/>
    
    <record id="view_hr_working_schedule_calendar_import_success" model="ir.ui.view">
            <field name="name">hr.working.schedule.calendar.import.success.wizard</field>
            <field name="model">hr.working.schedule.calendar.import.success</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="row_count" invisible="1"/>
                        <field name="message" />
                    </group>
                    <footer>
                        <button string="OK" special="cancel" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>
</odoo>