<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hse_operation_res_config_settings_views_forms" model="ir.ui.view">
        <field name="name">hse.operation.res.config.settings.inherit.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="equip3_general_setting.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='implementor_general_purchase']" position="before">
                <div id="implementor_general_hse">
                    <h2>Human Safety Environment</h2>
                    <div class="row mt16 o_settings_container" name="hse">
                        <div class="col-12 col-lg-6 o_setting_box" id="hse_operation">
                            <div class="o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="is_hse_action_approval_matrix" />
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="is_hse_action_approval_matrix" />
                                    <div class="text-muted">
                                        Set On/Off Action Checklist Approval Matrix
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>