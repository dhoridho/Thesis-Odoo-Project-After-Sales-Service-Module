<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_form_internal_transfer_good" model="ir.ui.view">
        <field name="name">view.form.internal.transfer.good</field>
        <field name="model">internal.transfer</field>
        <field name="inherit_id" ref="equip3_inventory_operation.view_form_internal_transfer"/>
        <field name="mode">primary</field>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <field name="is_mrp_transfer_request" invisible="1"/>
                <field name="is_mrp_transfer_back" invisible="1"/>
                <field name="is_mrp_transfer_good" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='source_warehouse_id']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='source_location_id']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='product_line_ids']/tree" position="attributes">
                <attribute name="create">0</attribute>
                <attribute name="delete">0</attribute>
            </xpath>
            <xpath expr="//field[@name='product_line_ids']/tree" position="inside">
                <field name="production_ids" widget="many2many_tags" optional="hide"/>
            </xpath> 
            <xpath expr="//field[@name='product_line_ids']//field[@name='product_id']" position="attributes">
                <attribute name="readonly">1</attribute>
                <attribute name="force_save">1</attribute>
            </xpath> 
            <xpath expr="//field[@name='product_line_ids']//field[@name='description']" position="attributes">
                <attribute name="readonly">1</attribute>
                <attribute name="force_save">1</attribute>
            </xpath> 
        </field>
    </record>

</odoo>