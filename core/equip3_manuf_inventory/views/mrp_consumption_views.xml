<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_mrp_consumption_form" model="ir.ui.view">
        <field name="name">view.mrp.consumption.form</field>
        <field name="model">mrp.consumption</field>
        <field name="inherit_id" ref="equip3_manuf_operations_contd.mrp_consumption_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='consumption_details']/group[2]" position="inside">
                <field name="product_use_expiration_date" invisible="1"/>
                <label for="expiry_days" attrs="{'invisible': ['|', ('product_tracking', 'not in', ('serial', 'lot')), ('product_use_expiration_date', '=', False)]}"/>
                <div attrs="{'invisible': ['|', ('product_tracking', 'not in', ('serial', 'lot')), ('product_use_expiration_date', '=', False)]}">
                    <field name="expiry_days" class="oe_inline"/> Days
                </div>
            </xpath>

            <xpath expr="//field[@name='finished_lot_ids']/tree" position="inside">
                <field name="mrp_consumption_expiration_date" string="Expiration Date" attrs="{'column_invisible': [('parent.product_use_expiration_date', '=', False)]}"/>
            </xpath>

            <xpath expr="//field[@name='rejected_lot_ids']/tree" position="inside">
                <field name="expiration_date" attrs="{'column_invisible': [ ('parent.product_use_expiration_date', '=', False)]}"/>
            </xpath>

            <xpath expr="//field[@name='byproduct_lot_ids']/tree" position="inside">
                <field name="expiration_date" attrs="{'column_invisible': [('parent.product_use_expiration_date', '=', False)]}"/>
            </xpath>
        </field>
    </record>
    
</odoo>