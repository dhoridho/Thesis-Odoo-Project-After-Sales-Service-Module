<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_mrp_workorder_form" model="ir.ui.view">
        <field name="name">view.mrp.workorder.form</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="equip3_manuf_operations.equip3_mrp_production_workorder_form_view_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" name="action_view_transfer_request" class="oe_stat_button" icon="fa-truck"  attrs="{'invisible': [('transfer_request_count', '=', 0)]}">
                    <div class="o_field_widget o_stat_info">
                        <span style="text-wrap: wrap;"><field name="transfer_request_count" widget="statinfo" nolabel="1"/> Transfer Requests</span>
                    </div>
                </button>
                
                <button type="object" name="action_view_material_request" class="oe_stat_button" icon="o-hm-smart-construction-material-request" attrs="{'invisible': [('material_request_count', '=', 0)]}">
                    <div class="o_field_widget o_stat_info">
                        <span style="text-wrap: wrap;"><field name="material_request_count" widget="statinfo" nolabel="1"/> Material Requests</span>
                    </div>
                </button>
            </xpath>

            <xpath expr="//field[@name='move_raw_ids']" position="before">
                <div class="mb-2">
                    <button name="action_transfer_request" type="object" string="Submit Transfer Request" states="ready,progress" class="oe_inline oe_highlight"/>
                    <button name="action_material_request" type="object" string="Submit Material Request" states="ready,progress" class="ml-2 oe_inline oe_highlight"/>
                </div>
            </xpath>
        </field>
    </record>

</odoo>