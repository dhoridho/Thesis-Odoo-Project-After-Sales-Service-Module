<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="equip3_manuf_accessright_settings.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='mrp']" position="inside">
                <h2 attrs="{'invisible': [('manufacturing', '=', False)]}">Secret Product/Bill of Materials</h2>
                <div class="row mt16 o_settings_container" attrs="{'invisible': [('manufacturing', '=', False)]}">
                    <div class="col-lg-6 col-12 o_setting_box" name="secret_product_container">
                        <div class="o_setting_left_pane">
                            <field name="group_use_secret_product"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="group_use_secret_product"/>
                            <div class="text-muted">
                                Use secret products?
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-12 o_setting_box" name="secret_bom_container">
                        <div class="o_setting_left_pane">
                            <field name="group_use_secret_bom"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="group_use_secret_bom"/>
                            <div class="text-muted">
                                Use secret Bill of Materials?
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>

            <xpath expr="//div[@name='mrp_auto_reserve_pp_container']" position="before">
                <div class="col-lg-6 col-12 o_setting_box" name="mrp_allow_submit_mr_pp_container">
                    <div class="o_setting_left_pane">
                        <field name="mrp_allow_submit_mr_pp"/>
                    </div>

                    <div class="o_setting_right_pane">
                        <label for="mrp_allow_submit_mr_pp" string="Allow Submit Material Request"/>
                        <div class="text-muted">
                            Labour is allowed to submit material request for the shortage of production materials.
                        </div>
                        <div class="content-group" attrs="{'invisible': [('mrp_allow_submit_mr_pp', '=', False)]}">
                            <div class="o_setting_box p-0">
                                <div class="o_setting_left_pane">
                                    <field name="mrp_allow_submit_mr_partial_pp"/>
                                </div>
            
                                <div class="o_setting_right_pane">
                                    <label for="mrp_allow_submit_mr_partial_pp" string="Submit Partial Request"/>
                                    <div class="text-muted">
                                        Partial request from Production Plan
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 col-12 o_setting_box" name="mrp_allow_submit_it_pp_container">
                    <div class="o_setting_left_pane">
                        <field name="mrp_allow_submit_it_pp"/>
                    </div>

                    <div class="o_setting_right_pane">
                        <label for="mrp_allow_submit_it_pp" string="Allow Submit Transfer Request"/>
                        <div class="text-muted">
                            Labour is allowed to submit transfer request for the shortage of production materials.
                        </div>
                        <div class="content-group" attrs="{'invisible': [('mrp_allow_submit_it_pp', '=', False)]}">
                            <div class="o_setting_box p-0">
                                <div class="o_setting_left_pane">
                                    <field name="mrp_allow_submit_it_partial_pp"/>
                                </div>
            
                                <div class="o_setting_right_pane">
                                    <label for="mrp_allow_submit_it_partial_pp" string="Submit Partial Request"/>
                                    <div class="text-muted">
                                        Partial request from Production Plan
                                    </div>
                                    <div class="content-group" attrs="{'invisible': [('mrp_allow_submit_it_partial_pp', '=', False)]}">
                                        <div class="o_setting_box p-0">
                                            <div class="o_setting_left_pane">
                                                <field name="mrp_allow_submit_it_partial_not_empty_pp"/>
                                            </div>
                        
                                            <div class="o_setting_right_pane">
                                                <label for="mrp_allow_submit_it_partial_not_empty_pp" string="Transfer Material Not Empty"/>
                                                <div class="text-muted">
                                                    Not allowing empty stock transfer requests
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>

            <xpath expr="//div[@name='mrp_auto_reserve_po_container']" position="before">
                <div class="col-lg-6 col-12 o_setting_box" name="mrp_allow_submit_mr_po_container">
                    <div class="o_setting_left_pane">
                        <field name="mrp_allow_submit_mr_po"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="mrp_allow_submit_mr_po" string="Allow Submit Materials Request"/>
                        <div class="text-muted">
                            Labor in allowed to submit materials request for the shortage of production materials.
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 col-12 o_setting_box" name="mrp_allow_submit_it_po_container">
                    <div class="o_setting_left_pane">
                        <field name="mrp_allow_submit_it_po"/>
                    </div>

                    <div class="o_setting_right_pane">
                        <label for="mrp_allow_submit_it_po" string="Allow Submit Transfer Request"/>
                        <div class="text-muted">
                            Labour is allowed to submit transfer request for the shortage of production materials.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>