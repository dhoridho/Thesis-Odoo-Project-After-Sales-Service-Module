<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_mrp_production_form" model="ir.ui.view">
        <field name="name">view.mrp.production.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="equip3_manuf_operations.mrp_production_form_view_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <field name="hide_change_component_btn" invisible="1"/>
                <field name="can_transfer_finished_goods" invisible="1"/>
                <field name="any_moves_to_transfer" invisible="1"/>
                <field name="transfer_back_count" invisible="1"/>

                <field name="mrp_allow_submit_it" invisible="1"/>
                <field name="mrp_allow_submit_mr" invisible="1"/>
            </xpath>

            <xpath expr="//button[@name='button_unbuild']" position="after">
                <button name="action_transfer_finished_goods" string="Transfer Finished Goods" type="object" class="oe_highlight" attrs="{'invisible': [('can_transfer_finished_goods', '=', False)]}"/>
            </xpath>

            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" name="action_view_transfer_request" class="oe_stat_button" icon="fa-truck" attrs="{'invisible': [('transfer_request_count', '=', 0)]}">
                    <div class="o_field_widget o_stat_info">
                        <span style="text-wrap: wrap;"><field name="transfer_request_count" widget="statinfo" nolabel="1"/> Transfer Requests</span>
                    </div>
                </button>
                <button type="object" name="action_view_transfer_good" class="oe_stat_button" icon="fa-truck" attrs="{'invisible': [('transfer_good_count', '=', 0)]}">
                    <div class="o_field_widget o_stat_info">
                        <span style="text-wrap: wrap;"><field name="transfer_good_count" widget="statinfo" nolabel="1"/> Transfer FGoods</span>
                    </div>
                </button>
                <button type="object" name="action_view_material_request" class="oe_stat_button" icon="o-hm-smart-construction-material-request" attrs="{'invisible': [('material_request_count', '=', 0)]}">
                    <div class="o_field_widget o_stat_info">
                        <span style="text-wrap: wrap;"><field name="material_request_count" widget="statinfo" nolabel="1"/> Material Requests</span>
                    </div>
                </button>
                <button type="object" name="action_view_transfer_back" class="oe_stat_button" icon="fa-truck" attrs="{'invisible': [('transfer_back_count', '=', 0)]}">
                    <div class="o_field_widget o_stat_info">
                        <span style="text-wrap: wrap;'"><field name="transfer_back_count" widget="statinfo" nolabel="1"/> Transfer Back</span>
                    </div>
                </button>
            </xpath>

            <xpath expr="//field[@name='move_raw_ids']" position="before">
                <div class="mb-2">
                    <button name="transfer_back_material" attrs="{'invisible': [('any_moves_to_transfer', '=', False)]}" type="object" string="Transfer Back Material" class="ml-2 oe_inline oe_highlight"/>
                    <button name="action_transfer_request" type="object" string="Submit Transfers Request" class="oe_inline oe_highlight" attrs="{'invisible' : ['|', ('mrp_allow_submit_it', '=', False), ('state', 'not in', ('confirmed', 'progress'))]}"/>
                    <button name="action_material_request" type="object" string="Submit Material Request"  class="ml-2 oe_inline oe_highlight" attrs="{'invisible' : ['|', '|', ('is_mr_created', '=', True), ('mrp_allow_submit_mr', '=', False), ('state', 'not in', ('confirmed', 'progress'))]}"/>
                    <button name="action_change_component" type="object" string="Change Material" class="ml-2 oe_inline oe_highlight" groups="equip3_manuf_accessright_settings.group_mrp_allow_change_components" attrs="{'invisible' : ['|', ('hide_change_component_btn', '!=', False), ('state', '!=', 'confirmed')]}"/>
                </div>
            </xpath>
        </field>
    </record>

</odoo>