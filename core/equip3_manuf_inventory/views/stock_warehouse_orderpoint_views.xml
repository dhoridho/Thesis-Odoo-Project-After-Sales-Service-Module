<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_inventory_stock_reorder_report_search" model="ir.ui.view">
        <field name="name">stock.warehouse.orderpoint.inherit</field>
        <field name="model">stock.warehouse.orderpoint</field>
        <field name="inherit_id" ref="equip3_inventory_control.view_inventory_stock_reorder_report_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='filter_to_replenish_on_itr']" position="after">
                <filter string="Replenish on MO" name="filter_to_replenish_on_mo" domain="[('action_to_take', '=', 'create_mo')]"/>
                <filter string="Replenish on MP" name="filter_to_replenish_on_mp" domain="[('action_to_take', '=', 'create_mp')]"/>
            </xpath>
        </field>
    </record>

</odoo>