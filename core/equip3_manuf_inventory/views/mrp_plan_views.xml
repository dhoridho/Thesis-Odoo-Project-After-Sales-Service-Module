<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_mrp_plan_form" model="ir.ui.view">
        <field name="name">view.mrp.plan.form</field>
        <field name="model">mrp.plan</field>
        <field name="inherit_id" ref="equip3_manuf_operations.mrp_plan_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <field name="hide_change_component_btn" invisible="1"/>
                <field name="can_transfer_finished_goods" invisible="1"/>
                <field name="show_transfer_back_material_button" invisible="1"/>

                <field name="mrp_allow_submit_it" invisible="1"/>
                <field name="mrp_allow_submit_it_partial" invisible="1"/>
                <field name="mrp_allow_submit_mr" invisible="1"/>
                <field name="mrp_allow_submit_mr_partial" invisible="1"/>
            </xpath>

            <xpath expr="//header" position="inside">
                <button name="action_transfer_fn_goods" attrs="{'invisible' : ['|',('state', 'not in', ('progress','to_close','done')),('can_transfer_finished_goods', '=', False)]}" type="object" string="Transfer Finished Goods" class="ml-2 oe_inline oe_highlight" />
            </xpath>

            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" name="action_view_transfer_request" class="oe_stat_button" icon="fa-truck"  attrs="{'invisible': [('transfer_request_count', '=', 0)]}">
                    <div class="o_field_widget o_stat_info">
                        <span style="text-wrap: wrap;"><field name="transfer_request_count" widget="statinfo" nolabel="1"/> Transfer Requests</span>
                    </div>
                </button>
                <button type="object" name="action_view_transfer_fn_goods" class="oe_stat_button" icon="fa-truck"  attrs="{'invisible': [('transfer_fn_goods_count', '=', 0)]}">
                    <div class="o_field_widget o_stat_info">
                        <span style="text-wrap: wrap;"><field name="transfer_fn_goods_count" widget="statinfo" nolabel="1"/> Transfer FGoods</span>
                    </div>
                </button>
                <button type="object" name="action_view_material_request" class="oe_stat_button" icon="o-hm-smart-construction-material-request" attrs="{'invisible': [('material_request_count', '=', 0)]}">
                    <div class="o_field_widget o_stat_info">
                        <span style="text-wrap: wrap;"><field name="material_request_count" widget="statinfo" nolabel="1"/> Material Requests</span>
                    </div>
                </button>
            </xpath>

            <xpath expr="//field[@name='mo_stock_move_ids']" position="before">
                <div class="mb-2">
                    <button name="transfer_back_material" type="object" string="Transfer Back Material" class="oe_inline oe_highlight mr-2" attrs="{'invisible' : [('show_transfer_back_material_button', '=', False)]}"/>
                    <button name="action_transfer_request" type="object" string="Submit Transfers Request" class="oe_inline oe_highlight mr-2" attrs="{'invisible': ['|', ('mrp_allow_submit_it', '=', False), ('state', 'not in', ('confirm', 'progress'))]}"/>
                    <button name="action_material_request" type="object" string="Submit Material Request" class="oe_inline oe_highlight mr-2" attrs="{'invisible' : ['|', '|', ('is_mr_done', '=', True), ('mrp_allow_submit_mr', '=', False), ('state', 'not in', ('confirm', 'progress'))]}"/>
                    <button name="action_change_component" type="object" string="Change Material" class="oe_inline oe_highlight mr-2" groups="equip3_manuf_accessright_settings.group_mrp_allow_change_components" attrs="{'invisible' : ['|', ('hide_change_component_btn', '!=', False), ('state', '!=', 'confirm')]}"/>
                </div>
            </xpath>
        </field>
    </record>

</odoo>