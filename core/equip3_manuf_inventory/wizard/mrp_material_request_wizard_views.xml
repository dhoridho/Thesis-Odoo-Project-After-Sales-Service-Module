<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_mrp_material_request_wizard_form" model="ir.ui.view">
        <field name="name">view.mrp.material.request.wizard.form</field>
        <field name="model">mrp.material.request.wizard</field>
        <field name="arch" type="xml">
            <form string="Material Request">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="plan_id" readonly="1" force_save="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="action" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="lines" string="Production Order">
                            <field name="line_ids" widget="one2many_selector">
                                <tree string="Production Order" editable="bottom" create="0" delete="0">
                                    <field name="is_checked" invisible="1"/>
                                    <field name="production_id" readonly="1" force_save="1"/>
                                    <field name="product_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_confirm" type="object" string="Confirm" class="oe_highlight"/>
                    <button special="cancel" string="Discard"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>