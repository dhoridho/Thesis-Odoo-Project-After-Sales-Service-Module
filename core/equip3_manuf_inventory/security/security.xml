<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="group_use_secret_product" model="res.groups">
        <field name="name">Group Use secret product features</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <record id="group_use_secret_bom" model="res.groups">
        <field name="name">Group Use secret BoM features</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <record id="group_mrp_secret_product" model="res.groups">
        <field name="name">MRP Allow to access secret products</field>
        <field name="implied_ids" eval="[(6, 0, [])]"/>
        <field name="category_id" ref="equip3_manuf_accessright_settings.module_category_manufacturing_equip3"/>
    </record>

    <record id="group_mrp_secret_bom" model="res.groups">
        <field name="name">MRP Allow to access secret BoM</field>
        <field name="implied_ids" eval="[(6, 0, [])]"/>
        <field name="category_id" ref="equip3_manuf_accessright_settings.module_category_manufacturing_equip3"/>
    </record>

    <record id="group_mrp_secret_manager" model="res.groups">
        <field name="name">MRP Allow to manage secret product/BoM</field>
        <field name="implied_ids" eval="[(6, 0, [
            ref('equip3_manuf_inventory.group_mrp_secret_product'), 
            ref('equip3_manuf_inventory.group_mrp_secret_bom')])
        ]"/>
        <field name="category_id" ref="equip3_manuf_accessright_settings.module_category_manufacturing_equip3"/>
    </record>

</odoo>