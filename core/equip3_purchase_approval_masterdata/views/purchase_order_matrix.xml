<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="purchase_order_matrix_inherit" model="ir.ui.view">
            <field name="name">approval.matrix.purchase.order.view.form.inherit</field>
            <field name="model">approval.matrix.purchase.order</field>
            <field name="inherit_id" ref="equip3_purchase_operation.view_form_approval_matrix_purchase_order"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='approval_matrix_purchase_order_line_ids']/tree/field[@name='sequence2']" position="after">
                    <field name="approver_types" required="1"/>
                </xpath>
                <xpath expr="//field[@name='approval_matrix_purchase_order_line_ids']/tree/field[@name='user_ids']" position="attributes">
                    <attribute name="attrs" >{'readonly':[('approver_types','=','by_hierarchy')],'required':[('approver_types','=','specific_approver')]}</attribute>
                </xpath>
                
            </field>
        </record>
    
        
    
    </data>
    

</odoo>
