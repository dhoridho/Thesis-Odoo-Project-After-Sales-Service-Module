<odoo>
    <data>
        <record id="sh_purchase_agreement_form_view_sh_po_tender_management_engineering" model="ir.ui.view">
            <field name="name">sh.purchase.agreement.form.view.sh.po.tender.management.engineering</field>
            <field name="model">purchase.agreement</field>
            <field name="inherit_id" ref="sh_po_tender_management.sh_purchase_agreement_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='sub_contracting']" position="after">
                    <field name="is_engineering" force_save="1"/>
                </xpath>
                <xpath expr="//notebook/page/field[@name='sh_purchase_agreement_line_ids']/tree/field[@name='variable']" position="after">
                    <field name="finish_good_id" attrs="{'column_invisible': [('parent.project', '=', False)]}"/>
			    </xpath>
                <xpath expr="//field[@name='variable_line_ids']/tree/field[@name='variable']" position="after">
                    <field name="finish_good_id"/>
			    </xpath>
                <xpath expr="//field[@name='material_line_ids']/tree/field[@name='variable']" position="after">
                    <field name="finish_good_id"/>
			    </xpath>
                <xpath expr="//field[@name='service_line_ids']/tree/field[@name='variable']" position="after">
                    <field name="finish_good_id"/>
			    </xpath>
                <xpath expr="//field[@name='equipment_line_ids']/tree/field[@name='variable']" position="after">
                    <field name="finish_good_id"/>
			    </xpath>
                <xpath expr="//field[@name='labour_line_ids']/tree/field[@name='variable']" position="after">
                    <field name="finish_good_id"/>
			    </xpath>
                <xpath expr="//field[@name='overhead_line_ids']/tree/field[@name='variable']" position="after">
                    <field name="finish_good_id"/>
			    </xpath>
            </field>
        </record>
    </data>
</odoo>