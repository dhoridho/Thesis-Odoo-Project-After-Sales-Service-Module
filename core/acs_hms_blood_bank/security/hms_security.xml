<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="group_blood_bank_user" model="res.groups">
        <field name="name">Blood Bank User</field>
        <field name="category_id" ref="acs_hms_base.module_category_hms"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user')),(4, ref('acs_hms_base.group_hms_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <data noupdate="1">

        <record model="ir.rule" id="acs_blood_issuance_rule">
            <field name="name">Blood Bank multi-company</field>
            <field name="model_id" ref="model_acs_blood_issuance"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>

        <record model="ir.rule" id="acs_blood_requisition_rule">
            <field name="name">Blood Bank multi-company</field>
            <field name="model_id" ref="model_acs_blood_requisition"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>

        <!-- See Own Department Patients -->
        <record id="hms_patient_department_rule" model="ir.rule">
            <field name="name">Departments Patients (Blood Bank)</field>
            <field name="model_id" ref="acs_hms_base.model_hms_patient"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', '|',('user_id.id','=',user.id), ('department_ids', 'in', [dep.id for dep in user.department_ids]),('department_ids', '=', False)]</field>
            <field name="groups" eval="[(4, ref('acs_hms_blood_bank.group_blood_bank_user'))]"/>
        </record>

    </data>
</odoo>

