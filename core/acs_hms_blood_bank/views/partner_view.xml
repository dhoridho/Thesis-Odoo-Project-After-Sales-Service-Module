<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_hms_partner_form" model="ir.ui.view">
        <field name="name">res.partner.hms</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="acs_hms.view_hms_partner_form"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='hms_info']" position="inside">
                <separator string="Blood Bank"/>
                <group>
                    <group>
                        <field name="is_receiver"/>
                    </group>
                    <group>
                        <field name="is_donor"/>
                    </group>
                </group>
            </xpath>

            <div name="button_box" position="inside">
                <button name="view_acs_blood_requisition" type="object" class="oe_stat_button" groups="acs_hms_blood_bank.group_blood_bank_user" icon="fa-heartbeat">
                    <field string="Blood Requisitions" name="acs_blood_requisition_count" widget="statinfo"/>
                </button>
                <button name="view_acs_blood_issuance" type="object" class="oe_stat_button" groups="acs_hms_blood_bank.group_blood_bank_user" icon="fa-heartbeat">
                    <field string="Blood Issuance" name="acs_blood_issuance_count" widget="statinfo"/>
                </button>
            </div>

        </field>
    </record>

    <record id="view_res_partner_filter" model="ir.ui.view">
        <field name="name">res.partner.filter</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <filter name="customer" position="before">
                <filter string="Is Blood Donor" name="is_donor" domain="[('is_donor','=',True)]"/>
                <filter string="Is Blood Receiver" name="is_receiver" domain="[('is_receiver','=',True)]"/>
            </filter>
        </field>
    </record>

    <record id="action_partner_blood_donor" model="ir.actions.act_window">
        <field name="name">Blood Donor</field>
        <field name="res_model">res.partner</field>
        <field name="context">{
            'search_default_is_donor': 1,
            'default_is_donor': 1,}</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="acs_hms.view_res_partner_filter" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Record Found
            </p>
            <p>
                Click to add a Blood Donor.
            </p>
        </field>
    </record>

    <record id="action_partner_blood_receiver" model="ir.actions.act_window">
        <field name="name">Blood Receiver</field>
        <field name="res_model">res.partner</field>
        <field name="context">{
            'search_default_is_receiver': 1,
            'default_is_receiver': 1,}</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="acs_hms.view_res_partner_filter" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Record Found
            </p>
            <p>
                Click to add a Blood Receiver.
            </p>
        </field>
    </record>

</odoo>