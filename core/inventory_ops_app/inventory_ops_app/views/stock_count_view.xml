<?xml version="1.0"?>
<odoo>

    <!--Form View-->
    <record id="stock_count_form" model="ir.ui.view">
        <field name="name">Stock Count Form</field>
        <field name="model">stock.count</field>
        <field name="arch" type="xml">
            <form string="Stock Count">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight"
                            attrs="{'invisible': [('state', '!=', 'open')]}"/>
                    <button name="action_done" string="Done" type="object" class="oe_highlight"
                            attrs="{'invisible': [('state', '!=', 'in_progress')]}"/>
                    <button name="action_recount" string="Recount" type="object"
                            attrs="{'invisible': [('state', '!=', 'in_progress')]}"/>
                    <button name="action_cancel" string="Cancel" type="object"
                            attrs="{'invisible': [('state', 'in', ['close','cancel'])]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="open,in_progress,close"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" attrs="{'invisible': [('name', '=', '/')]}" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="warehouse_id" attrs="{'readonly': [('state', '!=', 'open')]}"/>
                            <field name="location_ids" widget="many2many_tags"
                                   attrs="{'readonly': [('state', '!=', 'open')]}"/>
                            <field name="inventoried_product" widget="radio"
                                   attrs="{'readonly': [('state', '!=', 'open')]}"/>
                            <field name="product_ids" widget="many2many_tags"
                                   attrs="{'invisible': [('inventoried_product', '!=', 'specific_product')], 'required': [('inventoried_product', '=', 'specific_product')], 'readonly': [('state', '!=', 'open')]}"/>
                            <field name="product_category" widget="many2many_tags"
                                   attrs="{'invisible': [('inventoried_product', '!=', 'specific_category')], 'required': [('inventoried_product', '=', 'specific_category')], 'readonly': [('state', '!=', 'open')]}"/>
                        </group>
                        <group>
                            <field name="count_date" attrs="{'readonly': [('state', '!=', 'open')]}"/>
                            <field name="inv_id"
                                   attrs="{'invisible': [('inv_id', '=', False)], 'readonly': [('state', '!=', 'open')]}"/>
                            <field name="user_id" attrs="{'readonly': [('state', '!=', 'open')]}"/>
                            <field name="company_id" attrs="{'readonly': [('state', '!=', 'open')]}"/>
                            <field name="branch_id" readonly="1"/>
                            <field name="analytic_tag_ids" widget="many2many_tags"
                                    attrs="{'readonly': [('is_analytic_readonly_dup', '=', False)], 'invisible': [('is_analytic_mandatory', '=', False)], 'required': [('is_analytic_mandatory', '=', True)]}"/>
                            <field name="is_analytic_mandatory" invisible="1"/>
                            <field name="is_analytic_readonly_dup" invisible="1"/>
                        </group>
                    </group>
                    <div>
                        <separator string="Products"/>
                        <field name="line_ids" readonly="1">
                            <tree editable="bottom" colors="red: state=='cancel'">
                                <field name="product_id"/>
                                <field name="location_id"/>
                                <field name="state" invisible="1"/>
                                <field name="existing_qty"/>
                                <button name="view_existing_data" string="View Existing Quants" type="object"
                                        icon="fa-list"/>
                                <field name="count_qty"/>
                                <field name="tracking" invisible="1"/>
                                <button name="view_count_data" string="View Stock Count" type="object" icon="fa-list"
                                        attrs="{'invisible': [('tracking', '=', 'none')]}"/>
                                <button name="action_recount" string="Recount" type="object" help="Recount"
                                        icon="fa-refresh" attrs="{'invisible': [('state', '!=', 'in_progress')]}"/>
                            </tree>
                        </field>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!--Tree View-->
    <record id="stock_count_tree" model="ir.ui.view">
        <field name="name">Stock Count Tree</field>
        <field name="model">stock.count</field>
        <field name="arch" type="xml">
            <tree string="Stock Count">
                <field name="name"/>
                <field name="inventoried_product"/>
                <field name="location_ids" widget="many2many_tags"/>
                <field name="count_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!--Action-->
    <record id="stock_count_action" model="ir.actions.act_window">
        <field name="name">Stock Count App</field>
        <field name="res_model">stock.count</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
            </p>
        </field>
    </record>

    <!--Search-->
    <record id="stock_count_search" model="ir.ui.view">
        <field name="name">Stock Count Search</field>
        <field name="model">stock.count</field>
        <field name="arch" type="xml">
            <search string="Stock Count">
                <field name="name"/>
                <field name="state"/>
                <field name="inventoried_product"/>
                <group expand="1" string="Group By">
                    <filter string="Status" name="state" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="stock_count_line_form" model="ir.ui.view">
        <field name="name">Stock Count Line</field>
        <field name="model">stock.count.line</field>
        <field name="arch" type="xml">
            <form string="Stock Count Line">
                <group>
                    <group>
                        <field name="product_id" readonly="1"/>
                        <field name="existing_qty" readonly="1"/>
                        <field name="count_qty" readonly="1"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="stock_count_lot_form" model="ir.ui.view">
        <field name="name">Stock Count Lot</field>
        <field name="model">stock.count.line</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <form string="Stock Count Line">
                <group>
                    <group>
                        <field name="product_id" readonly="1"/>
                        <label for="existing_qty" string="Quantity"/>
                        <div>
                            <field name="existing_qty" class="oe_inline"/>
                        </div>
                    </group>
                </group>
                <div>
                    <separator string="Existing Lot/ Serial Nos"/>
                    <field name="quant_ids">
                        <tree>
                            <field name="lot_id" required="1"/>
                            <field name="quantity"/>
                        </tree>
                    </field>
                </div>
                <footer>
                    <button string="Close" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="stock_count_lot_form2" model="ir.ui.view">
        <field name="name">Stock Count Lot</field>
        <field name="model">stock.count.line</field>
        <field name="priority">150</field>
        <field name="arch" type="xml">
            <form string="Stock Count Line">
                <group>
                    <group>
                        <field name="product_id" readonly="1"/>
                        <label for="existing_qty" string="Quantity"/>
                        <div>
                            <field name="count_qty" class="oe_inline" readonly="1"/>/
                            <field name="existing_qty" class="oe_inline"/>
                        </div>
                    </group>
                </group>
                <div>
                    <separator string="Stock Count Lot/ Serial Nos"/>
                    <field name="count_lot_ids" readonly="1">
                        <tree>
                            <field name="lot_id" required="1"/>
                            <field name="qty"/>
                            <!--<field name="user_id"/>-->
                        </tree>
                    </field>
                </div>
                <footer>
                    <button string="Close" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="stock_count_lot_form3" model="ir.ui.view">
        <field name="name">Stock Count Lot</field>
        <field name="model">stock.count.line</field>
        <field name="priority">150</field>
        <field name="arch" type="xml">
            <form string="Stock Count Line">
                <group>
                    <group>
                        <field name="product_id" readonly="1"/>
                        <label for="existing_qty" string="Quantity"/>
                        <div>
                            <field name="count_qty" class="oe_inline" readonly="1"/>/
                            <field name="existing_qty" class="oe_inline"/>
                        </div>
                    </group>
                </group>
                <div>
                    <separator string="Stock Count"/>
                    <field name="count_lot_ids" readonly="1">
                        <tree>
                            <field name="qty"/>
                            <!-- <field name="user_id"/>-->
                        </tree>
                    </field>
                </div>
                <footer>
                    <button string="Close" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <menuitem id="stock_count_menu"
              name="Stock Count App"
              parent="equip3_inventory_control.menu_root_control"
              action="stock_count_action"
              sequence="3"/>

    <record id="stock_count_quant_search" model="ir.ui.view">
        <field name="name">Stock Count Quant Search</field>
        <field name="model">stock.count.quant</field>
        <field name="arch" type="xml">
            <search string="Stock Count Quant">
                <field name="product_id"/>
                <field name="lot_id"/>
                <!--  <field name="user_id"/>-->
                <group expand="1" string="Group By">
                    <filter name="product_id" string="Product" context="{'group_by':'product_id'}"/>
                    <filter name="lot_id" string="Lot/Serial No" context="{'group_by':'lot_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="stock_count_quant_tree" model="ir.ui.view">
        <field name="name">Stock Count Quant Tree</field>
        <field name="model">stock.count.quant</field>
        <field name="arch" type="xml">
            <tree string="Stock Count Quant" create="false" edit="false">
                <field name="product_id"/>
                <field name="lot_id"/>
                <field name="qty"/>
            </tree>
        </field>
    </record>

    <record id="stock_count_quant_action" model="ir.actions.act_window">
        <field name="name">Stock Count Valuation</field>
        <field name="res_model">stock.count.quant</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
            </p>
        </field>
    </record>


