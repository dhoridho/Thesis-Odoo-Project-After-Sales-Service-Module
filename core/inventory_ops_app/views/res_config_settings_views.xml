<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <!--Inventory App Settings-->
     <record id="inventory_app_config_settings" model="ir.ui.view">
        <field name="name">Res Config Setting View Inventory App</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block"
                     data-string="Inventory App"
                     string="Inventory App"
                     data-key="inventory_ops_app"
                     name="inventory_ops_app">

                    <h2>Inventory App</h2>
                    <div class="row mt16 o_settings_container" name="dynamic_sync_app">
                        <div class="col-12 col-lg-6 o_setting_box" id="dynamic_sync_settings">
                            <div class="o_setting_left_pane">
                                <field name="is_auto_sync"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_auto_sync"/>
                                <div class="text-muted">
                                    Dynamic Sync for Inventory App
                                </div>
                                <div class="content-group" attrs="{'invisible': [('is_auto_sync','=',False)]}">
                                    <div class="row mt16">
                                        <label for="duration" class="col-lg-3 o_light_label"/>
                                        <field name="duration" attrs="{'required': [('is_auto_sync', '!=', False)]}"/>
                                        <strong style="padding: 6px;">Sec</strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
     </record>

</odoo>