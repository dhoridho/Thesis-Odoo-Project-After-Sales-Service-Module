<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inventory_app_user_settings" model="ir.ui.view">
        <field name="name">Inventory App Sync User Settings</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
           <xpath expr="//page[last()]" position="after">
               <page name="inventory_app_sync" string="Inventory App Sync Settings" attrs="{'invisible': [('is_auto_sync_check','=',False)]}">
                   <group>
                       <group>
                           <field name="is_auto_sync_check"/>
                           <field name="picking_date" readonly="1"/>
                           <field name="interwarehouse_request_date" readonly="1"/>
                           <field name="interwarehouse_request_line_date" readonly="1"/>
                           <field name="stock_quant_date" readonly="1"/>
                           <field name="picking_line_date" readonly="1"/>
                           <field name="move_line_date" readonly="1"/>
                           <field name="stock_count_date" readonly="1"/>
                           <field name="stock_count_line_date" readonly="1"/>
                           <field name="package_date" readonly="1"/>
                           <field name="package_line_date" readonly="1"/>
                       </group>
                       <group>
                           <!--For Master record Process-->
                           <field name="product_date" readonly="1"/>
                           <field name="partner_date" readonly="1"/>
                           <field name="stock_location_date" readonly="1"/>
                           <field name="res_branch_date" readonly="1"/>
                           <field name="stock_warehouse_date" readonly="1"/>
                           <field name="product_category_date" readonly="1"/>
                           <field name="account_analytic_tag_date" readonly="1"/>
                           <field name="product_template_barcode_date" readonly="1"/>
                           <field name="stock_production_lot_date" readonly="1"/>
                           <field name="stock_package_date" readonly="1"/>
                           <!--For Unlink Process-->
                           <field name="stock_quant_unlink_data" readonly="1"/>
                           <field name="stock_count_unlink_data" readonly="1"/>
                           <field name="stock_count_line_unlink_data" readonly="1"/>
                           <field name="picking_unlink_data" readonly="1"/>
                           <field name="picking_line_unlink_data" readonly="1"/>
                           <field name="move_line_unlink_data" readonly="1"/>
                           <field name="interwarehouse_request_unlink_data" readonly="1"/>
                           <field name="interwarehouse_line_request_unlink_data" readonly="1"/>
                           <field name="package_unlink_data" readonly="1"/>
                       </group>
                   </group>
               </page>
           </xpath>
        </field>
    </record>

</odoo>