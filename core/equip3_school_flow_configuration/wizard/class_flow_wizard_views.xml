<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="class_flow_wizard_view_form" model="ir.ui.view">
        <field name="name">class_flow_wizard.view.form</field>
        <field name="model">class.flow.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <script>
                    $(".o_control_panel").remove();
                </script>
                <sheet>
                    <h1>Class Flow</h1>
                    <br/><br/><br/><br/>
                    <div class="container mt-3">
                        <div class="row">
                            <div class="col-2"></div>
                            <div class="col-1 m-0 p-0 text-center">
                                <button name="button_regular_timetable" type="object" class="btn" width="85" height="85">
                                    <img src="/equip3_school_flow_configuration/static/src/img/exam-timetable.svg"/>
                                    <br/>
                                    Timetable<br/>(Regular Timetable)
                                </button>
                            </div>
                            <div class="col-1 m-0 my-auto p-0 text-center">
                                <button name="button_exam_timetable" type="object" class="p-0" disabled="disabled">
                                    <i class="fa fa-arrow-right" style="font-size:2.8rem;"/>
                                </button>
                            </div>
                            <div class="col-1 m-0 p-0 text-center">
                                <button name="button_generate_classes_regular" type="object" class="btn" width="85" height="85">
                                    <img src="/equip3_school_flow_configuration/static/src/img/generate-classes.svg"/>
                                    <br/>
                                    Generate Regular Classes
                                </button>
                            </div>
                            <div class="col-1 m-0 my-auto p-0 text-center">
                                <button name="button_exam_timetable" type="object" class="p-0" disabled="disabled">
                                    <i class="fa fa-arrow-right" style="font-size:2.8rem;"/>
                                </button>
                            </div>
                            <div class="col-1 m-0 p-0 text-center">
                                <button name="button_regular_classes" type="object" class="btn" width="85" height="85">
                                    <img src="/equip3_school_flow_configuration/static/src/img/classes.svg"/>
                                    <br/>
                                    Class Schedule<br/>(Regular Classes)
                                </button>
                            </div>
                            <div class="col-1 m-0 my-auto p-0 text-center">
                                <button name="button_exam_timetable" type="object" class="p-0" disabled="disabled">
                                    <i class="fa fa-arrow-right" style="font-size:2.8rem; transform:rotate(45deg)"/>
                                </button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-8"></div>
                            <div class="col-1 m-0 p-0 text-center">
                                <button name="button_daily_attendance" type="object" class="btn">
                                    <img src="/equip3_school_flow_configuration/static/src/img/daily-attendance.svg"/>
                                    <br/>
                                    Daily Attendance
                                </button>
                            </div>
                        </div>
                       <div class="row">
                            <div class="col-4"></div>
                            <div class="col-1 m-0 p-0 text-center">
                                <button name="button_create_exam" type="object" class="btn" width="85" height="85">
                                    <img src="/equip3_school_flow_configuration/static/src/img/exam.svg"/>
                                    <br/>
                                    Exam
                                </button>
                            </div>
                            <div class="col-1 m-0 my-auto p-0 text-center">
                                <button name="button_exam_timetable" type="object" class="p-0" disabled="disabled">
                                    <i class="fa fa-arrow-right" style="font-size:2.8rem;"/>
                                </button>
                            </div>
                            <div class="col-1 m-0 p-0 text-center">
                                <button name="button_exam_classes" type="object" class="btn" width="85" height="85">
                                    <img src="/equip3_school_flow_configuration/static/src/img/classes.svg"/>
                                    <br/>
                                    Class Schedule<br/>(Exam Classes)
                                </button>
                            </div>
                            <div class="col-1 m-0 my-auto p-0 text-center">
                                <button name="button_exam_timetable" type="object" class="p-0" disabled="disabled">
                                    <i class="fa fa-arrow-right" style="font-size:2.8rem; transform:rotate(-45deg)"/>
                                </button>
                            </div>
                        </div>
                    </div>
                    <br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/>
                </sheet>
            </form>
        </field>
    </record>


    <record id="class_flow_wizard_action" model="ir.actions.act_window">
        <field name="name">Class Flow Wizard</field>
        <field name="res_model">class.flow.wizard</field>
        <field name="view_mode">form</field>
    </record>

    <record id="class_flow_wizard_action_client" model="ir.actions.client">
        <field name="name">Class Flow</field>
        <field name="tag">class_flow_tag</field>
    </record>

</odoo>
