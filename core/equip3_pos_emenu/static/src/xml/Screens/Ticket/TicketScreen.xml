<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="EmenuTicketScreen" owl="1" t-inherit="equip3_pos_masterdata.RetailTicketScreen" t-inherit-mode="extension">
        <xpath expr="//td[hasclass('th-total')]" position="after">
            <td style="text-align: center" class="th-status th-ememu-status" width='10%' t-if="env.pos.config.module_pos_restaurant">
                Status
            </td>
        </xpath>
        <xpath expr="//td[hasclass('td-total')]" position="after">
            <td style="text-align: center" class="th-status" width='10%' t-if="env.pos.config.module_pos_restaurant">
                <t t-esc="getEmenuStatus(order)"/>
            </td>
        </xpath>
    </t>

</templates>