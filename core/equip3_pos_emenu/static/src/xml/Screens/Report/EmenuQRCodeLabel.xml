<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="EmenuQRCodeLabel" owl="1">
        <div class="emenu_qrcode_label em_wrapper" 
            t-att-style="'width:'+receipt_template.width+';'"  
            t-att-id="receipt_template.element_id">
            <div class="em_company_logo">
                <img t-att-src="default.company_logo_url"/>
            </div>
            <div class="em_company_name">
                <t t-esc="default.company_name"/>
            </div>
            <div class="em_pos_config_name">
                <t t-esc="default.outlet_name"/>
            </div>
            <div class="em_dash_line"></div>
            <div class="em_floor_table">
                Floor/Table: <span><t t-esc="default.floor_table"/></span>
            </div>
            <div class="em_printed_date">
                Printed Date: <span><t t-esc="default.printed_date"/></span>
            </div>
            <div class="em_qrcode_image">
                <img t-att-src="get_emenu_qrcode_url()"/>
            </div>
            <div class="em_info">
                Please scan QR Code to Order
            </div>
        </div>
    </t>

</templates>