<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="EmenuQrOrderButton" owl="1"> 
       <div class="emenu-qrorder-button" t-on-click="onClick" title="Qr Order" t-att-sent_state="state.sent_state" t-att-class="{ oe_hidden: isHidden }">
            <!-- <span>Qr Order</span> -->
            <t t-if="state.sent_state == 'process'">
                <span class="btn-loader" title="generating QR Code for order...">
                    <i class="fa fa-spin fa-spinner"></i>
                </span>
            </t>
        </div> 
    </t>
    
</templates>