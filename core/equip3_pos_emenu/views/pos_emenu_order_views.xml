<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="pos_emenu_order_form" model="ir.ui.view">
        <field name="name">pos.emenu.order.form</field>
        <field name="model">pos.emenu.order</field>
        <field name="arch" type="xml">
            <form create="false" edit="false" delete="false">
                <header> 
                    <field name="state" widget="statusbar" statusbar_visible="created,new_order,received,to_pay,paid"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group> 
                            <field name="order_session_uid" readonly="1"/>
                            <field name="pos_session_id" readonly="1"/>
                            <field name="company_id" readonly="1" />
                            <field name="branch_id" readonly="1"/>
                            <field name="pos_config_id" readonly="1"/>
                            <field name="table_id" readonly="1"/>
                            <field name="floor_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="date" readonly="1"/>
                            <field name="currency_id"/>
                            <field name="pos_order_id" attrs="{'invisible':[('pos_order_id','=',False)]}"/>
                        </group>
                    </group> 
                    <notebook>
                        <page string="Order Lines">
                            <field name="line_ids" readonly="1">
                                <tree>
                                    <field name="order_number"/>
                                    <field name="product_id"/>
                                    <field name="qty"/>
                                    <field name="price"/>
                                    <field name="tax_ids" widget="many2many_tags"/>
                                    <field name="subtotal" optional="show"/>
                                    <field name="subtotal_incl" optional="show"/>
                                    <field name="note" optional="show"/>
                                    <field name="created_from" optional="hide"/>
                                    <field name="order_type" optional="order_type"/>
                                    <field name="state" optional="show"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="order_number"/>
                                                <field name="product_id"/>
                                                <field name="qty"/>
                                                <field name="price"/>
                                                <field name="tax_ids" widget="many2many_tags"/>
                                                <field name="subtotal"/>
                                                <field name="subtotal_incl"/>
                                                <field name="note"/>
                                                <field name="state"/>
                                            </group>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="pos_emenu_order_tree" model="ir.ui.view">
        <field name="name">pos.emenu.order.tree</field>
        <field name="model">pos.emenu.order</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0">
                <field name="name"/>
                <field name="order_session_uid" readonly="1"/>
                <field name="pos_session_id" readonly="1"/>
                <field name="pos_config_id" readonly="1"/>
                <field name="table_id"/>
                <field name="date"/>
                <field name="company_id" readonly="1" optional="show"/>
                <field name="branch_id" readonly="1"  optional="show"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="pos_emenu_order_search" model="ir.ui.view">
        <field name="name">pos.emenu.order.filter</field>
        <field name="model">pos.emenu.order</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="order_session_uid"/>
                <field name="state"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="pos_emenu_order_action">
        <field name="name">E-Menu Orders</field>
        <field name="res_model">pos.emenu.order</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem 
        id="pos_emenu_order_menu"
        name="E-Menu Orders"
        action="pos_emenu_order_action"
        parent="equip3_pos_masterdata.menu_database_logs_config"
        groups="point_of_sale.group_pos_manager,point_of_sale.group_pos_user"
        sequence="50"/>

</odoo>