<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="pos_config_retail_view_form_inherit" model="ir.ui.view">
        <field name="name">pos.config.retail</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="equip3_pos_general.pos_config_retail"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Emenu" groups="point_of_sale.group_pos_manager" 
                    attrs="{'invisible': [('module_pos_restaurant', '=', False)]}">
                    <group>
                        <group>
                            <group name="emenu_outlet_images" string="Outlet Banner Image">
                                <field name="emenu_outlet_images_ids" 
                                    class="o_website_sale_image_list" 
                                    context="{'default_name': name}" 
                                    mode="kanban" 
                                    domain="[('id', '=', -1)]"
                                    options="{'create_text':'Add a Image'}" nolabel="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="emenu_additional_orders_on_the_cashier_screen"/>
                        </group>
                    </group>
                </page>
            </xpath>
       	</field>
    </record>
</odoo>