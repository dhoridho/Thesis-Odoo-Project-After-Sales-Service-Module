<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	
    <record id="pos_emenu_outlet_image_form_view" model="ir.ui.view">
        <field name="name">pos.emenu.outlet.image.view.form</field>
        <field name="model">pos.emenu.outlet.image</field>
        <field name="arch" type="xml">
            <form string="Images">
                <group>
                    <group>
                        <field name="image" filename="name"/>
                        <field name="name" invisible="1"/>
                        <field name="sequence" invisible="1"/>
                    </group>
                </group>

                <!-- <div class="row o_website_sale_image_modal">
                    <div class="col-md-6 col-xl-5">
                        <label for="name" string="Image Name"/>
                        <h2><field name="name" placeholder="Image Name"/></h2>
                    </div>
                    <div class="col-md-6 col-xl-7 text-center o_website_sale_image_modal_container">
                        <div class="row">
                            <div class="col">
                                <field name="image" widget="image"/>
                            </div>
                        </div>
                    </div>
                </div> -->
            </form>
        </field>
    </record>

    <record id="pos_emenu_outlet_image_kanban_view" model="ir.ui.view">
        <field name="name">pos.emenu.outlet.image.view.kanban</field>
        <field name="model">pos.emenu.outlet.image</field>
        <field name="arch" type="xml">
            <kanban string="Images" default_order="sequence">
                <field name="id"/>
                <field name="name"/>
                <field name="image"/>
                <field name="sequence" widget="handle"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="card oe_kanban_global_click p-0">
                            <div class="o_squared_image">
                                <img class="card-img-top" t-att-src="kanban_image('pos.emenu.outlet.image', 'image', record.id.raw_value)" t-att-alt="record.name.value"/>
                            </div>
                            <div class="card-body p-0">
                                <h4 class="card-title p-2 m-0 bg-200">
                                    <small><field name="name"/></small>
                                </h4>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>