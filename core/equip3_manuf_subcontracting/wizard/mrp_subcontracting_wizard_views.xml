<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_subcontracting_wizard_view" model="ir.ui.view">
        <field name="name">mrp.subcontracting.wizard.view</field>
        <field name="model">mrp.subcontracting.wizard</field>
        <field name="arch" type="xml">
            <form string="Subcontracting">
                <group>
                    <field name="production_id" invisible="1"/>
                    <field name="origin" invisible="1"/>
                    <field name="allowed_requisition_ids" widget="many2many_tags" invisible="1"/>
                    <field name="requisition_id" options="{'no_create': True, 'no_create_edit':True}"/>
                    <field name="subcon_type" widget="radio"/>
                    <label for="product_qty" string="To Subcontract"/>
                    <div class="o_row no-gutters d-flex">
                        <div class="o_row">
                            <field name="product_qty"/>
                        </div>
                        <field name="uom_id" groups="uom.group_uom"/>
                    </div>
                </group>
                <footer>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
