<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_mrp_cost_actualization_form_subcon" model="ir.ui.view">
		<field name="name">view.mrp.cost.actualization.form.subcon</field>
		<field name="model">mrp.cost.actualization</field>
		<field name="inherit_id" ref="equip3_manuf_account.view_mrp_cost_actualization_form"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='production_line_ids']//field[@name='total']" position="before">
				<field name="total_subcontracting" sum="Total Subcontracting"/>
			</xpath>
		</field>
	</record>

	<record id="view_mrp_cost_actualization_production_form" model="ir.ui.view">
		<field name="name">view.mrp.cost.actualization.production.form</field>
		<field name="model">mrp.cost.actualization.production</field>
		<field name="inherit_id" ref="equip3_manuf_account.view_mrp_cost_actualization_production_form"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='total_labor']" position="after">
				<field name="total_subcontracting"/>
			</xpath>
		</field>
	</record>
	
</odoo>