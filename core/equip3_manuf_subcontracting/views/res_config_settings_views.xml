<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.sales.to.manufacturing</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mrp.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='module_mrp_subcontracting']" position="replace">
                <field name="use_subcontracting"/>
            </xpath>
            <xpath expr="//label[@for='module_mrp_subcontracting']" position="replace">
                <label for="use_subcontracting" string="Subcontracting"/>
            </xpath>
            
        </field>
    </record>
</odoo>