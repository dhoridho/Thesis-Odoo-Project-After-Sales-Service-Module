<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_mrp_workorder_form" model="ir.ui.view">
            <field name="name">view.mrp.workorder.form</field>
            <field name="model">mrp.workorder</field>
            <field name="inherit_id" ref="equip3_manuf_operations.equip3_mrp_production_workorder_form_view_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='create_uid']" position="after">
                    <field name="is_a_subcontracting" readonly="1"/>
                    <field name="force_qty" invisible="0"/>
                    <field name="subcon_material_picking_id" readonly="1" attrs="{'invisible': [('is_a_subcontracting', '=', False)]}"/>
                    <field name="subcon_finished_picking_id" readonly="1" attrs="{'invisible': [('is_a_subcontracting', '=', False)]}"/>
                </xpath>
            </field>
        </record>

        <record id="mrp_workorder_tree_editable_view_inherit_oop" model="ir.ui.view">
            <field name="name">mrp.workorder.tree.editable.view.inherit.oop</field>
            <field name="model">mrp.workorder</field>
            <field name="inherit_id" ref="equip3_manuf_operations_contd.mrp_workorder_tree_editable_view_inherit_contd"/>
            <field name="arch" type="xml">
                <field name="state" position="before">
                    <field name="is_a_subcontracting" invisible="1"/>
                    <field name="is_start" invisible="1"/>
                </field>

                <!-- hide button if wo is subcontracting -->
                <button name="button_start" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_start', '=', True)]}</attribute>
                </button>
                <button name="button_pending" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', '|', '|', ('is_a_subcontracting', '=', True), ('production_state', 'in', ('draft', 'done', 'approval', 'approved', 'reject')), ('working_state', '=', 'blocked'), ('is_user_working', '=', False)]}</attribute>
                </button>
                <button name="button_finish_wizard" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', '|', '|', ('is_a_subcontracting', '=', True), ('production_state', 'in', ('draft', 'done', 'approval', 'approved', 'reject')), ('working_state', '=', 'blocked'), ('is_user_working', '=', False)]}</attribute>
                </button>
                <button name="%(mrp.act_mrp_block_workcenter_wo)d" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', '|', '|', ('is_a_subcontracting', '=', True), ('production_state', 'in', ('draft', 'done', 'approval', 'approved', 'reject')), ('working_state', '=', 'blocked'), ('state', 'not in', ('ready', 'progress', 'pause'))]}</attribute>
                </button>
                <button name="button_unblock" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', '|', '|', ('is_a_subcontracting', '=', True), ('production_state', 'in', ('draft', 'done', 'approval', 'approved', 'reject')), ('working_state', '!=', 'blocked'), ('state', '!=', 'block')]}</attribute>
                </button>
            </field>
        </record>
    </data>
</odoo>
