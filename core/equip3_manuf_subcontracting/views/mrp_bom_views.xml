<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mrp_bom_form_view_subcon" model="ir.ui.view">
        <field name="name">mrp.bom.form.view.subcon</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp_subcontracting.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='subcontractor_ids']" position="replace"/>
        </field>
    </record>

    <record id="mrp_bom_form_view" model="ir.ui.view">
        <field name="name">mrp_bom_form_view</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="equip3_manuf_masterdata.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group/group" position="inside">
                <field name="bom_type" widget="radio" string="BoM Type" invisible="1"/>
                <field name="use_subcontracting" invisible="1"/>
                <field name="can_be_subcontracted" attrs="{'invisible': [('use_subcontracting', '=', False)]}"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page name="subcontracting" string="Subcontracting" attrs="{'invisible': [('can_be_subcontracted', '=', False)]}">
                    <group>
                        <field name="subcontracting_product_id" attrs="{'required': [('can_be_subcontracted', '=', True)]}"/>
                        <field name="subcontractor_ids" widget="many2many_tags" attrs="{'required': [('can_be_subcontracted', '=', True)]}"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>