<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_requisition_form" model="ir.ui.view">
        <field name="name">view.purchase.requisition.form</field>
        <field name="model">purchase.requisition</field>
        <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <field name="can_create_do" invisible="1"/>
                <button name="action_create_delivery_order" string="Create DO" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('can_create_do', '=', False), ('state', '!=', 'blanket_order')]}"/>
            </xpath>

            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" name="action_view_subcon_pickings" class="oe_stat_button" icon="fa-truck" attrs="{'invisible': ['|',  ('can_be_subcontracted', '=', False), ('subcon_delivery_count', '=', 0)]}" context="{'picking_type_code': 'outgoing'}">
                    <field name="subcon_delivery_count" widget="statinfo" string="Delivery Orders"/>
                </button>
            </xpath>

            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="is_a_subcontracting" invisible="1"/>
                <field name="can_be_subcontracted" invisible="1"/>
            </xpath>

            <xpath expr="//page[@name='products']" position="after">
                <page name="operations" string="Operation History" attrs="{'invisible': [('can_be_subcontracted', '=', False)]}">
                    <field name="subcon_operation_ids" readonly="1">
                        <tree string="Operation History" default_order="date_validated">
                            <field name="requisition_id" invisible="1"/>
                            <field name="purchase_id"/>
                            <field name="picking_id"/>
                            <field name="production_id"/>
                            <field name="consumption_id"/>
                            <field name="date_validated"/>
                            <field name="amount_received"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>