<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="assets_pos" name="Assets POS" inherit_id="equip3_pos_masterdata.assets_pos">
        <xpath expr="//script[@src='/equip3_pos_masterdata/static/src/js/Screens/ProductScreen/ProductScreen.js']" position="before">
            <script type="text/javascript" src="/equip3_pos_weight_scale/static/src/js/pos_weight.js"/>
        </xpath>
    </template>

    <record id="pos_config_drive_form" model="ir.ui.view">
        <field name="name">pos.config.form.view.inherit.posDrive</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode_nomenclature_id']" position="after">
                <label for="pos_drive_link" class="col-lg-3 o_light_label"/>
                <field name="pos_drive_link" string="Local Host Link"/>
            </xpath>

        </field>
    </record>
</odoo>
