<?xml version="1.0" ?>
<odoo>

    <record model="ir.model.access" id="access_survey_user_input_user_2">
        <field name="name">access_survey_user_input_user_2</field>
        <field name="model_id" ref="survey.model_survey_user_input"/>
        <field name="group_id" ref="school.group_school_teacher"/>
        <field name="perm_read">1</field>
        <field name="perm_write">1</field>
        <field name="perm_create">1</field>
        <field name="perm_unlink">1</field>
    </record>

    <record model="ir.model.access" id="access_exam_batchwise_result_2">
        <field name="name">access_exam_batchwise_result_2</field>
        <field name="model_id" ref="exam.model_exam_batchwise_result"/>
        <field name="group_id" ref="school.group_school_teacher"/>
        <field name="perm_read">1</field>
        <field name="perm_write">1</field>
        <field name="perm_create">1</field>
        <field name="perm_unlink">1</field>
    </record>
    
    <record model="ir.rule" id="rule_exam_batchwise_result">
        <field name="name">Teacher Exam Batchwise Result Rule</field>
        <field name="model_id" ref="exam.model_exam_batchwise_result"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('school.group_school_teacher'))]"/>
    </record>

    <record model="ir.rule" id="rule_survey_user_input">
        <field name="name">Teacher Survey User Input Rule</field>
        <field name="model_id" ref="survey.model_survey_user_input"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('school.group_school_teacher'))]"/>
    </record>

    <record model="ir.rule" id="rule_exam_exam">
        <field name="name">Teacher Exam Rule</field>
        <field name="model_id" ref="exam.model_exam_exam"/>
        <field name="domain_force">[('teacher_id.user_id.id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('school.group_school_teacher'))]"/>
    </record>

    <record model="ir.rule" id="exam.teacher_rule_exam_regular_schedule_record">
        <field name="active" eval="False"/>
    </record>

    <record model="ir.rule" id="rule_exam_result">
        <field name="name">Teacher Exam Result Rule</field>
        <field name="model_id" ref="exam.model_exam_result"/>
        <field name="domain_force">[('teacher_id.user_id.id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('school.group_school_teacher'))]"/>
    </record>

    <record model="ir.rule" id="exam.final_exam_result_record_rule_teacher">
        <field name="active" eval="False"/>
    </record>

    <record model="ir.rule" id="rule_additional_exam">
        <field name="name">Teacher Additional Exam Rule</field>
        <field name="model_id" ref="exam.model_additional_exam"/>
        <field name="domain_force">[('teacher_id.user_id.id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('school.group_school_teacher'))]"/>
    </record>

    <record model="ir.rule" id="exam.teacher_rule_additional_exam_schedule_record">
        <field name="active" eval="False"/>
    </record>

    <record model="ir.rule" id="rule_additional_exam_line">
        <field name="name">Teacher Additional Exam Lines Rule</field>
        <field name="model_id" ref="equip3_school_operation.model_additional_exam_line"/>
        <field name="domain_force">[('teacher_id.user_id.id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('school.group_school_teacher'))]"/>
    </record>

</odoo>
