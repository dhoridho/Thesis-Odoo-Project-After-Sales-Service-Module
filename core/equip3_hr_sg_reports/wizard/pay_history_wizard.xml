<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="pay_history_report_view_form" model="ir.ui.view">
        <field name="name">pay_history_report.view.form</field>
        <field name="model">pay.history.report</field>
        <field name="arch" type="xml">
            <form string="">
                <group name="employees">
                    <field name="pay_history_by" />
                    <field name="all_employees" attrs="{'invisible': [('pay_history_by', '!=', 'by_employee')]}" />
                    <field name="employee_ids" attrs="{'invisible': ['|', ('pay_history_by', '!=', 'by_employee'), ('all_employees', '=', True)]}" />
                </group>
                <group name="date_ranges" col="4">
                    <field name="from_date" />
                    <field name="to_date" />
                </group>
                <group name="salary_rules">
                    <field name="all_salary_rules" attrs="{'invisible': [('pay_history_by', '!=', 'by_company')]}" />
                    <field name="salary_rule_domain_ids" invisible="1" />
                    <field name="salary_rule_ids"
                        domain="[('id', 'in', salary_rule_domain_ids)]"
                        attrs="{'invisible': ['|', ('pay_history_by', '!=', 'by_company'), ('all_salary_rules', '=', True)]}">
                        <tree>
                            <field name="code" />
                            <field name="name" />
                            <field name="category_id" />
                        </tree>
                    </field>
                </group>
                <group name="footer">
                    <footer>
                        <button name="action_print" string="Print" type="object" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel" class="oe_link"/>
                    </footer>
                </group>
            </form>
        </field>
    </record>

    <record id="action_pay_history_report_wizard" model="ir.actions.act_window">
        <field name="name">Pay History Report</field>
        <field name="res_model">pay.history.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem action="action_pay_history_report_wizard" id="menu_pay_history_report_wizard" parent="sg_hr_report.menu_parent_hr_report_summary" sequence="7"/>

</odoo>
