<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_sg_timeoff_report_view_form" model="ir.ui.view">
        <field name="name">hr_sg_timeoff_report.view.form</field>
        <field name="model">hr.timeoff.report.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <group name="date_ranges" col="4">
                    <label for="date_from" string="Period"/>
                    <div>
                        <field name="date_from" class="oe_inline" required="1" /> -
                        <field name="date_to" class="oe_inline" required="1" />
                    </div>
                </group>
                <group name="employees">
                    <field name="all_employees" />
                    <field name="employee_ids" attrs="{'invisible': [('all_employees', '=', True)]}"/>
                </group>
                <group name="footer">
                    <footer>
                        <button name="action_print" string="Print" type="object" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel" class="oe_link"/>
                    </footer>
                </group>
            </form>
        </field>
    </record>

    <record id="action_hr_sg_timeoff_report_wizard" model="ir.actions.act_window">
        <field name="name">Time Off Report</field>
        <field name="res_model">hr.timeoff.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        action="action_hr_sg_timeoff_report_wizard"
        id="menu_hr_timeoff_report_wizard"
        parent="hr_holidays.menu_hr_holidays_report"
        sequence="-1"/>

</odoo>
