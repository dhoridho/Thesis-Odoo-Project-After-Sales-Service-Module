<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_sg_attendance_report_view_form" model="ir.ui.view">
        <field name="name">hr_sg_attendance_report.view.form</field>
        <field name="model">hr.attendance.report.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <group name="date_ranges">
                    <label for="date_from" string="Period"/>
                    <div>
                        <field name="date_from" class="oe_inline" required="1" /> -
                        <field name="date_to" class="oe_inline" required="1" />
                    </div>
                </group>
                <field name="specify_by" required="1" style="width:50%;" invisible="1"/>
                <group name="employees" attrs="{'invisible': [('specify_by', '!=', 'employee')]}">
                    <field name="all_employees" />
                    <field name="employee_ids" attrs="{'invisible': [('all_employees', '=', True)]}"/>
                </group>
                <group>
                    <field name="print_as" required="1" invisible="1" />
                </group>
                <group name="footer">
                    <footer>
                        <button name="action_print" string="Print" type="object" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel" class="oe_link"/>
                    </footer>
                </group>
            </form>
        </field>
    </record>

    <record id="action_hr_sg_attendance_report_wizard" model="ir.actions.act_window">
        <field name="name">Attendance Report</field>
        <field name="res_model">hr.attendance.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        action="action_hr_sg_attendance_report_wizard"
        id="menu_hr_attendance_report_wizard"
        parent="hr_attendance.menu_hr_attendance_manage_attendances"
        sequence="11"/>

</odoo>
