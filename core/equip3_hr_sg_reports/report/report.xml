<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="equip3_hr_sg_reports.cpf_payment_report_pdf_template">
        <t t-call="web.html_container">
            <t t-call="sg_hr_report.external_layout">                
                <t t-foreach="docs.get_report_data()" t-as="doc">
                    <div class="page">
                        <h5 style="font-weight: bold;margin-bottom:50px"><center>PAYMENT ADVICE</center></h5>
                        <table width="100%">
                            <tr>
                                <th style="font-size:14px;padding-left:5px;text-align:left;">MANDATORY REF NO</th>
                                <th style="font-size:14px;padding-left:5px;text-align:right;">:</th>
                                <th style="font-size:14px;padding-left:5px;text-align:left;"><t t-esc="doc['mandatory_ref_no']" /></th>
                                
                                <th style="font-size:14px;padding-left:5px;text-align:right;">SUB MODE</th>
                                <th style="font-size:14px;padding-left:5px;text-align:right;">:</th>
                                <th style="font-size:14px;padding-left:5px;text-align:left;"><t t-esc="doc['sub_mode']" /></th>
                            </tr>
                            <tr>
                                <th style="font-size:14px;padding-left:5px;text-align:left;">VOLUNTARY REF NO</th>
                                <th style="font-size:14px;padding-left:5px;text-align:right;">:</th>
                                <th style="font-size:14px;padding-left:5px;text-align:left;"><t t-esc="doc['voluntary_ref_no']" /></th>
                                
                                <th style="font-size:14px;padding-left:5px;text-align:right;">DATE</th>
                                <th style="font-size:14px;padding-left:5px;text-align:right;">:</th>
                                <th style="font-size:14px;padding-left:5px;text-align:left;"><t t-esc="doc['date']" /></th>
                            </tr>
                        </table>

                        <table width="100%" style="margin-top:30px;">
                            <tr>
                                <th width="50%" style="font-size:14px;padding-left:5px;text-align:left;">PART 1: Payment Details for <t t-esc="doc['period']" /></th>
                            </tr>
                            <tr>
                                <th style="font-size:14px;padding-left:5px;text-align:center;"></th>
                                <th style="font-size:14px;padding-left:5px;text-align:center;">Amount</th>
                                <th style="font-size:14px;padding-left:5px;text-align:center;">No of Employee</th>
                            </tr>
                            <tr>
                                <td style="font-size:14px;padding-left:5px;text-align:left;">CPF Contributions</td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"></td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"></td>
                            </tr>
                            <tr>
                                <td style="font-size:14px;padding-left:25px;text-align:left;">Mandaroy Contributions</td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="doc['cpf_mandatatory_amt']" /></td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="int(doc['emp_cpf_mandatory_amt'])" /></td>
                            </tr>
                            <tr>
                                <td style="font-size:14px;padding-left:25px;text-align:left;">Voluntary Contributions</td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="doc['cpf_voluntary_amount']" /></td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="int(doc['emp_fwl_amt'])" /></td>
                            </tr>
                            <tr>
                                <td style="font-size:14px;padding-left:5px;text-align:left;">B/F CPF Late Payment interest</td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="doc['cpf_late_payment_interest']" /></td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="int(doc['cpf_voluntary_amount'])" /></td>
                            </tr>
                            <tr>
                                <td style="font-size:14px;padding-left:5px;text-align:left;">Interest charged on last payment</td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="doc['interest_charged_on_last_payment']" /></td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="int(doc['emp_interest_charged_on_last_payment_amt'])" /></td>
                            </tr>
                            <tr>
                                <td style="font-size:14px;padding-left:5px;text-align:left;">Late payment interest on CPF Contribution</td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="doc['late_payment_interest_on_cpf']" /></td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="int(doc['emp_late_payment_on_cpf_amt'])" /></td>
                            </tr>
                            <tr>
                                <td style="font-size:14px;padding-left:5px;text-align:left;">Late payment penalty for Foreign Worker Levy</td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="doc['late_payment_penalty_fwl']" /></td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="int(doc['emp_late_payment_fwl_amt'])" /></td>
                            </tr>
                            <tr>
                                <td style="font-size:14px;padding-left:5px;text-align:left;">Foreign Worker Levy</td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="doc['fwl_amt']" /></td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="int(doc['emp_fwl_amt'])" /></td>
                            </tr>
                            <tr>
                                <td style="font-size:14px;padding-left:5px;text-align:left;">Skills Development Levy (SDL)</td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="doc['cpf_sdl_amt']" /></td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="int(doc['emp_sdl_amt'])" /></td>
                            </tr>
                            <tr>
                                <td style="font-size:14px;padding-left:5px;text-align:left;">Donation to Community Chest</td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="doc['donation_amt']" /></td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="int(doc['emp_donation_amt'])" /></td>
                            </tr>
                            <tr>
                                <td style="font-size:14px;padding-left:5px;text-align:left;">Mosque Building &amp; Mendaki Fund (MBMF)</td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="doc['mbmf_amt']" /></td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="int(doc['emp_mbmf_amt'])" /></td>
                            </tr>
                            <tr>
                                <td style="font-size:14px;padding-left:5px;text-align:left;">SINDA Fund</td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="doc['sinda_amt']" /></td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="int(doc['emp_sinda_amt'])" /></td>
                            </tr>
                            <tr>
                                <td style="font-size:14px;padding-left:5px;text-align:left;">CDAC Fund</td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="doc['cdac_amt']" /></td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="int(doc['emp_cdac_amt'])" /></td>
                            </tr>
                            <tr>
                                <td style="font-size:14px;padding-left:5px; padding-bottom: 30px;text-align:left;">Eurisian Community Fund (EUCH)</td>
                                <td style="font-size:14px;padding-left:5px; padding-bottom: 30px;text-align:center;"><t t-esc="doc['ecf_amt']" /></td>
                                <td style="font-size:14px;padding-left:5px; padding-bottom: 30px;text-align:center;"><t t-esc="int(doc['emp_ecf_amt'])" /></td>
                            </tr>
                            <tr style="border-top: 1px solid black;">
                                <th style="font-size:14px;padding-left:5px;text-align:left;">Total</th>
                                <th style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="doc['total_col_amt']" /></th>
                                <th style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="int(doc['total_no_employees'])" /></th>
                            </tr>
                            <tr>
                                <th style="font-size:14px;padding-left:5px;text-align:right;"></th>
                                <th style="font-size:14px;padding-left:5px;text-align:center;"></th>
                                <th style="font-size:14px;padding-left:100;padding-top:70px;text-align:left;">
                                THE EMPLOYER HEREBY GUARANTEES THE ACCURACY <br/>
                                OF THE CPF RETURNS FOR NOVEMBER 2023 <br/>
                                AS SHOWN ON THE SUBMITTED DISKETTE. <br/><br/><br/><br/><br/>
                                <u>EMPLOYER'S AUTHORIZED SIGNATORY</u>
                                </th>
                            </tr>
                        </table>
                    </div>
                    <div class="page" style="page-break-before: always;">
                        <table width="100%" style="margin-top:30px;">
                            <tr>
                                <th width="50%" style="font-size:14px;padding-left:5px;text-align:left;">CPF RETURN VIA 3-1/2 DISKETTE</th>
                            </tr>
                            <tr>
                                <th style="font-size:14px;padding-left:5px;text-align:center;"></th>
                                <th style="font-size:14px;padding-left:5px;text-align:center;">Amount</th>
                                <th style="font-size:14px;padding-left:5px;text-align:center;">No of Employee</th>
                            </tr>
                            <tr>
                                <td style="font-size:14px;padding-left:5px;text-align:left;">Mandaroy Contributions</td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="doc['mandatory_contribution']" /></td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="int(doc['emp_cpf_mandatory_amt'])" /></td>
                            </tr>
                            <tr>
                                <td style="font-size:14px;padding-left:5px;text-align:left;">Voluntary Contributions</td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="doc['voluntary_contribution']" /></td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="int(doc['emp_cpf_voluntary_amt'])" /></td>
                            </tr>
                            <tr>
                                <td style="font-size:14px;padding-left:5px;text-align:left;">Last Contribution</td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="doc['last_contribution']" /></td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;">0</td>
                            </tr>
                            <tr>
                                <td style="font-size:14px;padding-left:5px;text-align:left;">MBMF Fund</td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="doc['mbmf_fund']" /></td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="int(doc['emp_mbmf_amt'])" /></td>
                            </tr>
                            <tr>
                                <td style="font-size:14px;padding-left:5px;text-align:left;">SINDA Fund</td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="doc['sinda_fund']" /></td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="int(doc['emp_sinda_amt'])" /></td>
                            </tr>
                            <tr>
                                <td style="font-size:14px;padding-left:5px;text-align:left;">CDAC Fund</td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="doc['cdac_fund']" /></td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="int(doc['emp_cdac_amt'])" /></td>
                            </tr>
                            <tr>
                                <td style="font-size:14px;padding-left:5px;text-align:left;">ECF Fund</td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="doc['ecf_fund']" /></td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="int(doc['emp_ecf_amt'])" /></td>
                            </tr>
                            <tr>
                                <td style="font-size:14px;padding-left:5px;text-align:left;">SDL Fund</td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="doc['cpfdsl_fund']" /></td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="int(doc['emp_sdl_amt'])" /></td>
                            </tr>
                            <tr>
                                <td style="font-size:14px;padding-left:5px;text-align:left;">Ordinary Wage</td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="doc['ordinary_wages']" /></td>
                                <td style="font-size:14px;padding-left:5px;text-align:center;">0</td>
                            </tr>
                            <tr>
                                <td style="font-size:14px;padding-left:5px;padding-bottom: 30px;text-align:left;">Additional Wage</td>
                                <td style="font-size:14px;padding-left:5px;padding-bottom: 30px;text-align:center;"><t t-esc="doc['additional_wages']" /></td>
                                <td style="font-size:14px;padding-left:5px;padding-bottom: 30px;text-align:center;">0</td>
                            </tr>
                            <tr style="border-top: 1px solid black;">
                                <th style="font-size:14px;padding-left:5px;text-align:left;">Total</th>
                                <th style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="doc['total_col_amt_pt_2']" /></th>
                                <th style="font-size:14px;padding-left:5px;text-align:center;"><t t-esc="int(doc['total_no_employees_pt_2'])" /></th>
                            </tr>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="equip3_hr_sg_reports.cpf_payment_report_pdf" model="ir.actions.report">
        <field name="name">CPF Payment Report PDF</field>
        <field name="model">cpf.payment.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">equip3_hr_sg_reports.cpf_payment_report_pdf_template</field>
        <field name="report_file">equip3_hr_sg_reports.cpf_payment_report_pdf_template</field>
        <field name="attachment_use">1</field>
        <field name="binding_type">report</field>
        <field name="binding_model_id" eval="False"/>
        <field name="paperformat_id" ref="base.paperformat_euro"/>
        <field name="print_report_name">Payment Advance</field>
    </record>

</odoo>
