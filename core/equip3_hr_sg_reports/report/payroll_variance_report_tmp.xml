<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="payroll_variance_report_tmp">
      <t t-call="web.html_container">
        <t t-set="data_report_margin_top" t-value="45"/>
        <t t-set="data_report_header_spacing" t-value="45"/>
        <t t-foreach="docs" t-as="o">
            <t t-call="sg_hr_report.external_layout">
                <div class="page">
                    <div class="oe_structure" />
                    <template id="ergobit_css" inherit_id="web.layout">
                        <xpath expr="//head" position="inside">
                            <link rel="stylesheet" href="/sg_hr_report/static/src/css/payslip.css" />
                        </xpath>
                    </template>
                    <p t-esc="data['name']"/>
                    <t t-if="data['payroll_variance_by'] == 'basic_salary'">
                        <table border="1" width="100%" style="margin-top: 20px; margin-bottom: 20px;border-collapse: collapse;">
                            <thead>
                                <tr style="border-bottom: 1px solid black;">
                                    <th style="padding: 4px;">Employee ID</th>
                                    <th style="padding: 4px;">Employee Name</th>
                                    <th style="padding: 4px;">Department</th>
                                    <th style="padding: 4px;"><span t-esc="data['prev_period']"/></th>
                                    <th style="padding: 4px;"><span t-esc="data['curr_period']"/></th>
                                    <th style="padding: 4px;">Variance</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="data['data_lines'].items()" t-as="line">
                                    <tr style="border-bottom: 1px solid grey;">
                                        <td style="padding: 4px;"><span t-esc="line[1]['emp_number']"/></td>
                                        <td style="padding: 4px;"><span t-esc="line[1]['emp_name']"/></td>
                                        <td style="padding: 4px;"><span t-esc="line[1]['department']"/></td>
                                        <td style="padding: 4px;"><span t-esc="'{0:,.2f}'.format(line[1]['prev_period_salary'])"/></td>
                                        <td style="padding: 4px;"><span t-esc="'{0:,.2f}'.format(line[1]['curr_period_salary'])"/></td>
                                        <td style="padding: 4px;"><span t-esc="'{0:,.2f}'.format(line[1]['curr_period_salary'] - line[1]['prev_period_salary'])"/></td>
                                        
                                    </tr>
                                </t>
                                <tr style="border-bottom: 1px solid grey;font-weight: bold;">
                                        <td style="padding: 4px;"/>
                                        <td style="padding: 4px;"/>
                                        <td style="padding: 4px;">Total</td>
                                        <td style="padding: 4px;"><span t-esc="'{0:,.2f}'.format(data['prev_total'])"/></td>
                                        <td style="padding: 4px;"><span t-esc="'{0:,.2f}'.format(data['curr_total'])"/></td>
                                        <td style="padding: 4px;"><span t-esc="'{0:,.2f}'.format(data['curr_total'] - data['prev_total'])"/></td>
                                    </tr>
                            </tbody>
                        </table>
                    </t>
                    <t t-else="">
                        <table border="1" width="100%" style="margin-top: 20px; margin-bottom: 20px;border-collapse: collapse;">
                            <thead>
                                <tr style="border-bottom: 1px solid black;">
                                    <th style="padding: 4px;">Name</th>
                                    <th style="padding: 4px;"><span t-esc="data['prev_period']"/></th>
                                    <th style="padding: 4px;"><span t-esc="data['curr_period']"/></th>
                                    <th style="padding: 4px;">Variance</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="data['data_lines'].items()" t-as="line">
                                    <tr style="border-bottom: 1px solid grey;">
                                        <td style="padding: 4px;"><span t-esc="line[1]['name']"/></td>
                                        <td style="padding: 4px;"><span t-esc="'{0:,.2f}'.format(line[1]['prev_period_salary'])"/></td>
                                        <td style="padding: 4px;"><span t-esc="'{0:,.2f}'.format(line[1]['curr_period_salary'])"/></td>
                                        <td style="padding: 4px;"><span t-esc="'{0:,.2f}'.format(line[1]['curr_period_salary'] - line[1]['prev_period_salary'])"/></td>
                                        
                                    </tr>
                                </t>
                                <tr style="border-bottom: 1px solid grey;font-weight: bold;">
                                    <td style="padding: 4px;">Total</td>
                                    <td style="padding: 4px;"><span t-esc="'{0:,.2f}'.format(data['prev_total'])"/></td>
                                    <td style="padding: 4px;"><span t-esc="'{0:,.2f}'.format(data['curr_total'])"/></td>
                                    <td style="padding: 4px;"><span t-esc="'{0:,.2f}'.format(data['curr_total'] - data['prev_total'])"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </t>
                    
                </div>
                <div class="oe_structure"/>
            </t>
        </t>
      </t>
    </template>
</odoo>
