<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="equip3_hr_sg_reports.pay_history_report_container">
            <t t-call="web.html_container">
                <t t-set="o" t-value="o"/>
                <t t-call="sg_hr_report.external_layout">
                    <t t-foreach="docs.get_report_data()" t-as="data">
                        <div class="page" style="page-break-before: always;">
                            <h2 style="font-weight:bold;">PAY HISTORY BY <t t-esc="data['pay_history_by']"/></h2>
                            <h3 style="margin-bottom:30px;font-size:20px">From Period <t t-esc="data['period_from']"/> to <t t-esc="data['period_to']"/></h3>
                            <t t-if="data['pay_history_by'].lower() == 'employee'">
                                <table width="100%">
                                    <tr>
                                        <tr>
                                            <td style="padding: 4px"><strong>Employee ID</strong></td>
                                            <td style="padding: 4px"><strong><t t-esc="data['employee_id']" /></strong></td>
                                            <td style="padding: 4px"><strong>Department</strong></td>
                                            <td style="padding: 4px"><strong><t t-esc="data['department']" /></strong></td>
                                        </tr>
                                        <tr>
                                            <td style="padding: 4px"><strong>Employee Name</strong></td>
                                            <td style="padding: 4px"><strong><t t-esc="data['employee_name']" /></strong></td>
                                        </tr>
                                    </tr>
                                </table>
                            </t>
                            <table width="100%" style="margin-top: 20px; margin-bottom: 20px;border-collapse: collapse;">
                                <thead>
                                    <tr style="text-align:center;border-bottom: 1px solid black !important;padding: 4px;">
                                        <th style="width:300px;"></th>
                                        <t t-foreach="data['payslip_data'].keys()" t-as="payslip_month">
                                            <th><t t-esc="payslip_month" /></th>
                                        </t>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-if="data['line_names']">
                                        <t t-foreach="data['line_names']" t-as="line_name">
                                            <tr style="text-align:center;padding: 4px;">
                                                <td style="text-align:left;padding: 4px;">
                                                    <t t-esc="line_name" />
                                                </td>
                                                <t t-foreach="data['payslip_data'].keys()" t-as="month">
                                                    <t t-if="line_name in data['payslip_data'][month]">
                                                        <td><t t-esc="round(data['payslip_data'][month][line_name], 2)" /></td>
                                                    </t>
                                                    <t t-else="">
                                                        <td>0</td>
                                                    </t>
                                                </t>
                                                <td>
                                                    <t t-esc="round(sum(data['payslip_data'][month][line_name] for month in data['payslip_data'].keys() if line_name in data['payslip_data'][month]), 2)" />
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                    <t t-else="">
                                        <tr style="text-align:center;padding: 4px;">
                                            <td></td>
                                            <t t-foreach="data['payslip_data'].keys()" t-as="month">
                                                <td style="text-align:center;">0</td>
                                            </t>
                                            <td>0</td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <template id="equip3_hr_sg_reports.pay_history_report_template">
            <t t-foreach="docs" t-as="o">
                <t t-call="equip3_hr_sg_reports.pay_history_report_container"/>
            </t>
        </template>

        <record id="equip3_hr_sg_reports.pay_history_report_pdf" model="ir.actions.report">
            <field name="name">Pay History Report PDF</field>
            <field name="model">pay.history.report</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">equip3_hr_sg_reports.pay_history_report_template</field>
            <field name="report_file">equip3_hr_sg_reports.pay_history_report_template</field>
            <field name="attachment_use">1</field>
            <field name="binding_type">report</field>
            <field name="binding_model_id" eval="False"/>
            <field name="paperformat_id" ref="equip3_hr_sg_reports_paperformat_euro_landscape"/>
            <field name="print_report_name">'Pay History Report'</field>
        </record>

</odoo>
