<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="equip3_hr_sg_reports.hr_attendance_report">
            <t t-call="web.html_container">
                <t t-set="o" t-value="o"/>
                    <t t-call="sg_hr_report.external_layout">
                        <t t-foreach="docs.get_report_data()" t-as="data">
                            <t t-foreach="list(data.keys())[1:]" t-as="emp_id">
                                <div class="page" style="page-break-before: always;">
                                    <h2 style="font-weight:bold;">ATTENDANCE REPORT IN DETAILS</h2>
                                    <h3 style="margin-bottom:30px;font-size:20px">Range: <t t-esc="data['period']"/></h3>
                                    <table width="100%">
                                        <tr>
                                            <td style="padding: 4px"><strong>Employee ID</strong></td>
                                            <td style="padding: 4px"><strong><t t-esc="data[emp_id]['identification_id']" /></strong></td>
                                            <td style="padding: 4px"><strong>Department</strong></td>
                                            <td style="padding: 4px"><strong><t t-esc="data[emp_id]['department']" /></strong></td>
                                        </tr>
                                        <tr>
                                            <td style="padding: 4px"><strong>Employee Name</strong></td>
                                            <td style="padding: 4px"><strong><t t-esc="data[emp_id]['employee_name']" /></strong></td>
                                        </tr>
                                    </table>
                                    <table width="100%" style="margin-top: 20px; margin-bottom: 20px;border-collapse: collapse;">
                                        <thead>
                                            <tr style="text-align:left;border-bottom: 1px solid black !important;padding: 4px;">
                                                <th>Date</th>
                                                <th>Day</th>
                                                <th>Status</th>
                                                <th>Check In</th>
                                                <th>Check Out</th>
                                                <th>Work Hours</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="data[emp_id]['attendances'].keys()" t-as="date">
                                                <tr style="text-align:left;padding: 4px;">
                                                    <td><t t-esc="data[emp_id]['attendances'][date]['dates']" /></td>
                                                    <td><t t-esc="data[emp_id]['attendances'][date]['day']" /></td>
                                                    <td></td>
                                                    <td><t t-esc="data[emp_id]['attendances'][date]['check_in']" /></td>
                                                    <td><t t-esc="data[emp_id]['attendances'][date]['check_out']" /></td>
                                                    <td><t t-esc="data[emp_id]['attendances'][date]['worked_hours']" /></td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                        </t>
                    </t>
                </t>
            </t>
        </template>

        <template id="equip3_hr_sg_reports.hr_attendance_report_template">
            <t t-foreach="docs" t-as="o">
                <t t-call="equip3_hr_sg_reports.hr_attendance_report"/>
            </t>
        </template>

        <record id="equip3_hr_sg_reports.hr_attendance_action_report" model="ir.actions.report">
            <field name="name">Attendance Report</field>
            <field name="model">hr.attendance.report.wizard</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">equip3_hr_sg_reports.hr_attendance_report_template</field>
            <field name="report_file">equip3_hr_sg_reports.hr_attendance_report_template</field>
            <field name="attachment_use">1</field>
            <field name="binding_type">report</field>
            <field name="binding_model_id" eval="False"/>
            <field name="paperformat_id" ref="equip3_hr_sg_reports_paperformat_euro_landscape"/>
            <field name="print_report_name">'Attendance Report'</field>
        </record>

</odoo>
