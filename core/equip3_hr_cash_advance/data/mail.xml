    <data noupdate="0">
        <record id="email_template_approval_cash_advance_request" model="mail.template">
            <field name="name">Approval of Cash Advance Request - Send by Email</field>
            <field name="email_from">${ctx['email_from']|safe}</field>
            <field name="subject">Approval of Cash Advance Request</field>
            <field name="email_to">${ctx['email_to']|safe}</field>
            <field name="model_id" ref="equip3_hr_cash_advance.model_vendor_deposit"/>
            <field eval="True" name="auto_delete"/>
            <field name="body_html"><![CDATA[
            <p>Dear ${object.employee_id.name},</p>
            <br/>
            <p>
                We have received your request for Cash advance request ${object.name}.
            </p>
            <br/>
            <p>
                This notification serves as confirmation that your cash advance request has been approved.
            </p>
            <br/>
            <br/>
            <p>
                Thank you.
            </p>
            <br/>
            <br/>
        ]]></field>
        </record>
    </data>

