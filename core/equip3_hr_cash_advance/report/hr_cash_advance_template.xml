<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_cash_advance">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <t t-foreach="docs" t-as="o">
                            <div class="page">

                                <div class="row">
                                    <div class="col-3 mb4" style="width:100%; float:left; max-width: 100%;">
                                        <h4 style="color:#be1e2d;">
                                            <strong>Cash Advance Request</strong>
                                        </h4>
                                        <strong>
                                            <span t-field="o.name"/>
                                        </strong>
                                    </div>
                                </div>

                                <br/>
                                <style>
                                    .divTable{
                                    display: table;
                                    width: 100%;
                                    }
                                    .divTableRow {
                                    display: table-row;
                                    }
                                    .divTableHeading {
                                    display: table-header-group;
                                    }
                                    .divTableCell, .divTableHead {
                                    display: table-cell;
                                    padding-top: 3px;
                                    padding-right: 20px;
                                    padding-bottom: 3px;
                                    padding-left: 0%;
                                    }
                                    .divTableHeading {
                                    background-color: #EEE;
                                    display: table-header-group;
                                    font-weight: bold;
                                    }
                                    .divTableFoot {
                                    background-color: #EEE;
                                    display: table-footer-group;
                                    font-weight: bold;
                                    }
                                    .divTableBody {
                                    display: table-row-group;
                                    }
                                    .main_table{
                                    display: table;
                                    width: 100%;
                                    }
                                    .main_table th{
                                    padding-top: 3px;
                                    padding-right: 37px;
                                    padding-bottom: 3px;
                                    padding-left: 1%;
                                    border:1px solid black;
                                    }
                                    .main_table td{
                                    padding-top: 3px;
                                    padding-right: 37px;
                                    padding-bottom: 3px;
                                    padding-left: 1%;
                                    border:1px solid black;
                                    }
                                </style>
                                <div class="divTable">
                                    <div class="divTableBody">
                                        <div class="divTableRow">
                                            <div class="divTableCell">Date of Advance</div>
                                            <div class="divTableCell">:</div>
                                            <div class="divTableCell">
                                                <span t-field="o.advance_date"/>
                                            </div>
                                            <div class="divTableCell"></div>
                                            <div class="divTableCell">Department</div>
                                            <div class="divTableCell">:</div>
                                            <div class="divTableCell">
                                                <span t-field="o.employee_id.department_id.name"/>
                                            </div>
                                        </div>
                                        <div class="divTableRow">
                                            <div class="divTableCell">Employee</div>
                                            <div class="divTableCell">:</div>
                                            <div class="divTableCell">
                                                <span t-field="o.employee_id.name"/>
                                            </div>
                                            <div class="divTableCell"></div>
                                            <div class="divTableCell">Payment Method</div>
                                            <div class="divTableCell">:</div>
                                            <div class="divTableCell"><span t-field="o.journal_id.name"/> -
                                                <span t-field="o.currency_id.name"/>
                                            </div>
                                        </div>
                                        <div class="divTableRow">
                                            <div class="divTableCell">Job Position</div>
                                            <div class="divTableCell">:</div>
                                            <div class="divTableCell">
                                                <span t-field="o.employee_id.job_id.name"/>
                                            </div>
                                            <div class="divTableCell"></div>
                                            <div class="divTableCell">Reference</div>
                                            <div class="divTableCell">:</div>
                                            <div class="divTableCell">
                                                <span t-field="o.communication"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row" style="padding-top: 2%;">
                                    <div class="col-3 mb4" style="width:100%; float:left; max-width: 100%;">
                                        <strong>
                                            <span>Cash Advance Lines</span>
                                        </strong>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-12">
                                        <table class="main_table">
                                            <thead>
                                                <tr>
                                                    <th class="text-left" style="border-right: 0px;">Description</th>
                                                    <th class="text-right" style="border-left: 0px;">Amount</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <t t-foreach="o.advance_line_ids" t-as="line">
                                                    <tr style="page-break-inside: avoid">
                                                        <td class="text-left" style="border-right: 0px;">
                                                            <span t-field="line.name"/>
                                                        </td>
                                                        <td class="text-right" style="border-left: 0px;">
                                                            <span t-field="line.amount"/>
                                                        </td>
                                                    </tr>
                                                </t>
                                                <t>
                                                    <tr class="text-right">
                                                        <td style="border: 0px;">
                                                            <strong class="mr16">Total
                                                                Amount
                                                            </strong>
                                                        </td>
                                                        <td colspan="99"
                                                            style="border: 0px; border-bottom:3px solid black">
                                                            <span t-field="o.amount"/>
                                                        </td>
                                                    </tr>
                                                </t>

                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                                <div class="row mt16 mb16" style="padding-top: 10%;">
                                    <t>
                                        <div class="col-12">
                                            <span>Certified honest &amp; Confirm,</span>
                                            <br/>
                                            <span>(Date &amp; Signature)</span>
                                        </div>
                                    </t>
                                </div>

                            </div>
                        </t>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>