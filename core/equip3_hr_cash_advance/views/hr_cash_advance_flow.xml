<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- hr.cash.advance.flow form view -->
    <record id="hr_cash_advance_flow_view_form" model="ir.ui.view">
        <field name="name">hr.cash.advance.flow.view.form</field>
        <field name="model">hr.cash.advance.flow</field>
        <field name="arch" type="xml">
            <form string="HR Cash Advance FLow" class="hr_cash_advance_flow_menu d-flex flex-column">
                <div class="content-header">
                    <div class="d-flex p-3 w-100">
                        <span>Cash Advance Flow</span>
                    </div>
                </div>
                <div class="content-body">
                    <div class="container h-100">
                        <div class="row h-100">
                            <div class="col-md-2 d-flex flex-column">
                            </div>
                            <div class="col-md-2 d-flex flex-column">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="equip3_accounting_cash_advance.action_account_cash_advance_config" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_cash_advance/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Settings</div>
                                        </button>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <div class="menu-arrow-down">
                                            <span class="arrow is-triangle arrow-bar is-down"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="equip3_hr_cash_advance.action_account_cash_advance_approve_custom" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_cash_advance/static/src/img/my-cash-advance.svg"/>
                                            </div>
                                            <div class="button-text">Cash Advance</div>
                                            <div class="menu-arrow">
                                                <span class="arrow is-triangle arrow-bar is-right"></span>
                                            </div>
                                        </button>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <div class="menu-arrow-down">
                                            <span class="arrow is-triangle arrow-bar is-down"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="equip3_hr_cash_advance.action_account_cash_advance_all" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_cash_advance/static/src/img/manage-cash-advance.svg"/>
                                            </div>
                                            <div class="button-text">All Advance</div>
                                            <div class="menu-arrow">
                                                <span class="arrow is-triangle arrow-bar is-left"></span>
                                            </div>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 d-flex flex-column top-2">
                                <div class="row">
                                    <div class="col-md-6 col-sm-6 col-6">
                                    </div>
                                    <div class="col-md-6 col-sm-6 col-6"> 
                                    </div>
                                    <div class="col-md-6 col-sm-6 col-6"> 
                                        <button name="equip3_hr_cash_advance.action_account_cash_advance_approve_manager" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_cash_advance/static/src/img/manage-cash-advance.svg"/>
                                            </div>
                                            <div class="button-text">Advance to Approve</div>
                                            <div class="menu-arrow">
                                                <span class="arrow is-triangle arrow-bar is-right"></span>
                                            </div>
                                        </button>
                                    </div>
                                    <div class="col-md-6 col-sm-6 col-6"> 
                                        <button name="equip3_hr_cash_advance.action_account_cash_advance_pay" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_cash_advance/static/src/img/manage-cash-advance.svg"/>
                                            </div>
                                            <div class="button-text">Advance to Pay</div>
                                            <div class="menu-arrow-up-right">
                                                <span class="arrow is-triangle arrow-bar is-up-right"></span>
                                            </div>
                                            <div class="menu-arrow">
                                                <span class="arrow is-triangle arrow-bar is-right"></span>
                                            </div>
                                            <div class="menu-arrow-down-right">
                                                <span class="arrow is-triangle arrow-bar is-down-right"></span>
                                            </div>
                                        </button>
                                    </div>
                                    <div class="col-md-6 col-sm-6 col-6"> 
                                        <button name="action_none" 
                                            type="object"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_cash_advance/static/src/img/travel.svg"/>
                                            </div>
                                            <div class="button-text">Travel</div>
                                        </button>
                                    </div>
                                    <div class="col-md-6 col-sm-6 col-6">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2 d-flex flex-column top-1">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="action_none" 
                                            type="object"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_cash_advance/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Reconciled</div>
                                        </button>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="action_none" 
                                            type="object"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_cash_advance/static/src/img/expenses.svg"/>
                                            </div>
                                            <div class="button-text">Convert as Expense</div>
                                        </button>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="action_none" 
                                            type="object"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_cash_advance/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Return Cash Advance</div>
                                            <div class="menu-arrow">
                                                <span class="arrow is-triangle arrow-bar is-right"></span>
                                            </div>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2 d-flex flex-column top-3">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="equip3_hr_cash_advance.action_account_cash_advance_pivot_report" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_cash_advance/static/src/img/reporting.svg"/>
                                            </div>
                                            <div class="button-text">Cash Advance Analysis</div>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </field>
    </record>
    
    <record id="hr_cash_advance_flow_action" model="ir.actions.act_window">
        <field name="name">Cash Advance Flow</field>
        <field name="res_model">hr.cash.advance.flow</field>
        <field name="view_mode">form</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="help" type="html">
           <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
            </p><p>
                <!-- More details about what a user can do with this object will be OK --> 
            </p>
        </field>
    </record>

    <record id="cash_advance_flow_action_client" model="ir.actions.client">
        <field name="name">Cash Advance Flow</field>
        <field name="tag">cash_advance_flow_tag</field>
    </record>
    
   

</odoo>