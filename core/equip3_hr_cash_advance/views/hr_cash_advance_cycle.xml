<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_cash_advance_cycle_tree" model="ir.ui.view">
            <field name="name">hr.cash.advance.cycle.tree</field>
            <field name="model">hr.cash.advance.cycle</field>
            <field name="arch" type="xml">
                <tree string="Cash Advance Cycle">
                    <field name="hr_year_id"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_cash_advance_cycle_from" model="ir.ui.view">
            <field name="name">hr.cash.advance.cycle.from</field>
            <field name="model">hr.cash.advance.cycle</field>
            <field name="arch" type="xml">
                <form string="Cash Advance Cycle">
                    <header>
                        <button name="cash_advance_confirm"
                                string="Auto Generate Cycles"
                                type="object"
                                attrs="{'invisible': [('is_confirm', '=', True)]}"
                                class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="hr_year_id" attrs="{'readonly': [('is_confirm', '=', True)]}"/>
                                <field name="is_confirm" invisible="1"/>
                            </group>

                            <group name="cash_advance_limit">
                                <field name="limit_type" readonly="1" force_save="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Cash Advance Cycle">
                                <field name="cash_advance_cycle_line_ids" readonly="1">
                                    <tree create="0" edit="0" delete="0" readonly="1">
                                        <field name="code"/>
                                        <field name="cycle_start"/>
                                        <field name="cycle_end"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_cash_advance_cycle_action" model="ir.actions.act_window">
            <field name="name">Cash Advance Cycle</field>
            <field name="res_model">hr.cash.advance.cycle</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="hr_cash_advance_cycle_menu"
                  name="Cash Advance Cycle"
                  parent="equip3_accounting_cash_advance.menu_action_cash_advance_configuration"
                  sequence="10"
                  action="hr_cash_advance_cycle_action"/>
    </data>
</odoo>
