<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="view_form_res_config_settings_cash_advance_form" model="ir.ui.view">
        <field name="name">res.config.settings.form.ca.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="71"/>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='cash_advanced']" position="inside">
                <h2>Cash Advance Settings</h2>
                <div class="row mt16 o_settings_container" name="cash_advance_setting_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="cash_advance_control_setting"
                         title="Presence of employees">
                        <div class="content-group">
                            <div class="mt16">
                                <div class="o_setting_left_pane">
                                    <field name="cash_advance_approval_matrix"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="cash_advance_approval_matrix" string="Cash Advance Approval Matrix"/>
                                </div>
                            </div>
                            <div class="mt16" attrs="{'invisible':[('cash_advance_approval_matrix','=',False)]}">
                                <label for="cash_type_approval" string="Approval Method"/>
                                <field style="margin-left:10px;" name="cash_type_approval" class="oe_inline" required="1"/>
                            </div>
                            <div class="mt16" attrs="{'invisible':['|', ('cash_advance_approval_matrix','=',False), ('cash_type_approval','!=','employee_hierarchy')]}">
                                <label for="cash_level" string="Approval Levels"/>
                                <field style="margin-left:16px;" name="cash_level" class="oe_inline" required="1"/>
                            </div>
                        </div>
                    </div>
                </div>
                <h2>Notification</h2>
                <div class="row mt16 o_settings_container"
                     name="cash_advance_notification_wa_setting_container">
                    <div class="col-12 col-lg-6 o_setting_box"
                         id="cash_advance_notification_wa_setting">
                        <div class="o_setting_left_pane">
                            <field name="send_by_wa_cashadvance"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label string="Send By Whatsapp" for="send_by_wa_cashadvance"/>
                        </div>
                    </div>
                </div>
                <div class="row mt16 o_settings_container"
                     name="cash_advance_notification_email_setting_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="cash_advance_notification_email_setting">
                        <div class="o_setting_left_pane">
                            <field name="send_by_email_cashadvance"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label string="Send By Email" for="send_by_email_cashadvance"/>
                        </div>
                    </div>
                </div>
<!--                Auto Email Follow Cron-->
                <div class="row mt16 o_settings_container" name="auto_follow_up_cash">
                    <div class="col-12 col-lg-6 o_setting_box" id="auto_follow_up_cash_setting">
                        <div class="content-group">
                            <div class="mt16">
                                <field  name="auto_follow_up_cash"/>
                                <label for="auto_follow_up_cash" string="Auto Follow Up" class="oe_inline" style="margin-left:10px;"/>
                            </div>
                            <div class="mt16" attrs="{'invisible':[('auto_follow_up_cash','!=',True)]}">
                                <label for="interval_number_cash" string="Execute Every"/>
                                <div attrs="{'invisible':[('auto_follow_up_cash','!=',True)]}">
                                    <field name="interval_number_cash" class="oe_inline" attrs="{'required':[('auto_follow_up_cash','=',True)]}"/>
                                    <field name="interval_type_cash" class="oe_inline" attrs="{'required':[('auto_follow_up_cash','=',True)]}"/>
                                </div>
                            </div>
                            <div class="mt16" attrs="{'invisible':[('auto_follow_up_cash','!=',True)]}">
                                <label for="number_of_repititions_cash" string="Number of Repetitions"/>
                                <field name="number_of_repititions_cash" class="oe_inline" attrs="{'required':[('auto_follow_up_cash','=',True)]}"/>
                            </div>
                        </div>
                    </div>
                </div>
                    <!-- </div> -->
                <!-- </div> -->
            </xpath>
            </field>
            </record>


