<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="sale_res_config_settings_form_inherit" model="ir.ui.view">
            <field name="name">res.config.settings.from</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="website.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='website']" position="inside">
                    <h2>Customer Feedback</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="feedback_template_id" class="col-md-3 o_light_label"
                                               style="font-weight:bold;"/>
                                        <field name="feedback_template_id"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="email_template_id" class="col-md-3 o_light_label"
                                               style="font-weight:bold;"/>
                                        <field name="email_template_id"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row mt16">
                                        <div class="col-12">
                                            <label for="send_mail_after" class="o_form_label o_light_label"
                                                   style="font-weight:bold;"/>
                                            <field name="send_mail_after" class="col-md-2"/><span
                                                style="font-weight:bold;">Days</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="day_interval" class="col-md-3 o_light_label"
                                               style="font-weight:bold;"/>
                                        <field name="day_interval"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="number_of_email" class="col-md-3 o_light_label"
                                               style="font-weight:bold;"/>
                                        <field name="number_of_email"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
