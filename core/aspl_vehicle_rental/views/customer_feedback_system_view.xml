<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id='aspl_customer_feedback_form' model='ir.ui.view'>
            <field name='name'>aspl.customer.feedback.form</field>
            <field name='model'>aspl.customer.feedback</field>
            <field name='arch' type='xml'>
                <form string='Customer Feedback'>
                    <sheet>
                        <group col="4">
                            <field name="partner_id" options="{'no_create':True}"/>
                            <field name="feedback_date"/>
                            <field name="template_id" options="{'no_create':True}"/>
                        </group>
                        <notebook>
                            <page string="Customer Questions">
                                <field name="customer_answer_ids">
                                    <tree>
                                        <field name="question_id"/>
                                    </tree>
                                    <form string='Customer Feedback Answer'>
                                        <sheet>
                                            <group col="4">
                                                <field name="question_id" options="{'no_create':True}"/>
                                                <field name="template_id" options="{'no_create':True}"/>
                                                <field name="none_of_above"/>
                                                <field name="comment"/>
                                                <field name="ratings" widget="priority"/>
                                            </group>
                                            <notebook>
                                                <page string="Answers">
                                                    <field name="answer_ids">
                                                        <tree>
                                                            <field name="answer"/>
                                                        </tree>
                                                        <form string="Answers">
                                                            <sheet>
                                                                <group>
                                                                    <field name="answer"/>
                                                                </group>
                                                            </sheet>
                                                        </form>
                                                    </field>
                                                </page>
                                            </notebook>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="aspl_customer_feedback_tree" model="ir.ui.view">
            <field name="name">aspl.customer.feedback.tree</field>
            <field name="model">aspl.customer.feedback</field>
            <field name="arch" type="xml">
                <tree string="Customer Feedback">
                    <field name="partner_id"/>
                    <field name="feedback_date"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="aspl_customer_feedback_action">
            <field name="name">Customer Feedback</field>
            <field name="res_model">aspl.customer.feedback</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="aspl_feedback_menu_root" parent="aspl_vehicle_rental.fleet_vehicle_main_menu" sequence="5"
                  name="Feedback"/>

        <menuitem action="aspl_customer_feedback_action"
                  id="menu_aspl_customer_feedback_action"
                  parent="aspl_feedback_menu_root"/>

        <record id='aspl_feedback_template_form' model='ir.ui.view'>
            <field name='name'>aspl.feedback.template.form</field>
            <field name='model'>aspl.feedback.template</field>
            <field name='arch' type='xml'>
                <form string='Feedback Template'>
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,open,close"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button"/>
                            </button>
                        </div>
                        <group col="4">
                            <field name="name"/>
                            <field name="description"/>
                            <field name="auth_require"/>
                            <field name="page_configuration"/>
                            <field name="template_type"/>
                        </group>
                        <notebook>
                            <page string="Questions">
                                <field name="question_ids">
                                    <tree string="Questions">
                                        <field name="name"/>
                                        <field name="question_type"/>
                                        <field name="answer_mode"/>
                                    </tree>
                                    <form string='Feedback Question'>
                                        <sheet>
                                            <group col="4">
                                                <field name="name"/>
                                                <field name="question_type"/>
                                                <field name="answer_mode"/>
                                                <field name="optional"/>
                                                <field name="add_comment"/>
                                                <field name="comment"/>
                                                <field name="rate_type"
                                                       attrs="{'invisible': [('question_type', '!=', 'widget')]}"/>
                                                <field name="ratings"
                                                       attrs="{'invisible': [('question_type', '!=', 'widget')]}"/>
                                            </group>
                                            <notebook>
                                                <page string="Answers">
                                                    <field name="answer_ids" mode="tree">
                                                        <tree string="Answers" editable="bottom">
                                                            <field name="answer"/>
                                                        </tree>
                                                    </field>
                                                </page>
                                            </notebook>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="aspl_feedback_template_tree" model="ir.ui.view">
            <field name="name">aspl.feedback.template.tree</field>
            <field name="model">aspl.feedback.template</field>
            <field name="arch" type="xml">
                <tree string="Feedback Template">
                    <field name="name"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="aspl_feedback_template_search" model="ir.ui.view">
            <field name="name">aspl.feedback.template.search</field>
            <field name="model">aspl.feedback.template</field>
            <field name="arch" type="xml">
                <search>
                    <field name="active" string="Name"/>
                    <filter string="Active" name="active" domain="[('active','=', True)]"/>
                    <filter string="De-Active" name="de_active" domain="[('active','=', False)]"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="aspl_feedback_template_action">
            <field name="name">Template</field>
            <field name="res_model">aspl.feedback.template</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Configuration"
                  id="menu_configuration_action"
                  parent="aspl_feedback_menu_root"/>

        <menuitem action="aspl_feedback_template_action"
                  id="menu_aspl_feedback_template_action"
                  parent="menu_configuration_action"/>


        <record id='aspl_feedback_question_form' model='ir.ui.view'>
            <field name='name'>aspl.feedback.question.form</field>
            <field name='model'>aspl.feedback.question</field>
            <field name='arch' type='xml'>
                <form string='Feedback Question'>
                    <sheet>
                        <group col="4">
                            <field name="name"/>
                            <field name="template_id" options="{'no_create':True}"/>
                            <field name="question_type"/>
                            <field name="answer_mode" attrs="{'invisible': [('question_type', '=', 'widget')]}"/>
                            <field name="optional"/>
                            <field name="add_comment"/>
                            <field name="rate_type" attrs="{'invisible': [('question_type', '=', 'widget')]}"/>
                            <field name="ratings" attrs="{'invisible': [('question_type', '!=', 'widget')]}"
                                   widget="priority"/>
                        </group>
                        <notebook attrs="{'invisible': [('question_type', '=', 'widget')]}">
                            <page string="Answers">
                                <field name="answer_ids" mode="tree">
                                    <tree string="Answers" editable="bottom">
                                        <field name="answer"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="aspl_feedback_question_tree" model="ir.ui.view">
            <field name="name">aspl_feedback_question.tree</field>
            <field name="model">aspl.feedback.question</field>
            <field name="arch" type="xml">
                <tree string="Feedback Question">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="aspl_feedback_question_action">
            <field name="name">Feedback Question</field>
            <field name="res_model">aspl.feedback.question</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem action="aspl_feedback_question_action"
                  id="menu_aspl_feedback_question_action"
                  parent="menu_configuration_action"/>
    </data>
</odoo>
