<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="action_fleet_calender_vehicle_booking1" model="ir.actions.client">
            <field name="name">Vehical Rental Booking</field>
            <field name="tag">resource_view_new</field>
        </record>

        <record id="vehicle_booking_id" model="ir.ui.view">
            <field name="name">Vehicle booking</field>
            <field name="model">fleet.vehicle.booking</field>
            <field name="arch" type="xml">
                <form string="Fleet Vehicle Booking">
                    <header>
                        <button name="search_vehicle" string="Search" type="object" class="oe_highlight"/>
                        <button name="book_vehicle" string="Create" type="object" class="oe_highlight"
                                attrs="{'invisible':[('is_search','=',False)]}"/>
                        <button name="cancel_booking" string="Cancel" special="cancel" type="object"
                                class="oe_highlight"/>
                    </header>
                    <field name="book_number" invisible="True"/>
                    <sheet>
                        <group col="4">
                            <field name="from_date" required="1"/>
                            <field name="to_date" required="1"/>
                        </group>
                        <group col="4">
                            <field name="vehicle_class" required="1"/>
                            <field name="vehicle_type_id" context="{'v_type':vehicle_class,'from_quick_search': True}"
                                   required="1"/>
                            <field name="ac_require"/>
                            <field name="fuel_type"/>
                            <field name="station_id"/>
                            <field name="is_carrier"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="is_search" invisible="1"/>
                        </group>
                        <notebook attrs="{'invisible':[('is_search','=',False)]}">
                            <page name="vehicle_details" string="Vehicle Details">
                                <field name="fleet_vehicle_ids">
                                    <tree editable="bottom">
                                        <field name="model_id"/>
                                        <field name="rate_as_per_day"/>
                                        <field name="rate_as_per_km"/>
                                        <field name="rate_day_ac"/>
                                        <field name="rate_km_ac"/>
                                        <field name="select_vehicle"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <group>
                            <group>
                                <field name="unit_selection" attrs="{'invisible':[('is_search','=',False)]}"/>
                                <field name="total_days"
                                       attrs="{'invisible':['|',('is_search','=',False),('unit_selection','=','per_km')]}"/>
                                <field name="total_km" attrs="{'invisible':[('unit_selection','=','per_day')]}"/>
                            </group>
                            <group>
                                <field name="extra_charges" attrs="{'invisible':[('is_search','=',False)]}"/>
                                <field name="sub_total" attrs="{'invisible':[('is_search','=',False)]}"/>
                                <field name="total" attrs="{'invisible':[('is_search','=',False)]}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_fleet_quick_vehicle_booking" model="ir.actions.act_window">
            <field name="name">Vehicle booking</field>
            <field name="res_model">fleet.vehicle.booking</field>
            <field name="view_mode">form</field>
        </record>

        <record id="action_fleet_vehicle_booking" model="ir.actions.act_window">
            <field name="name">Vehical Rental Booking</field>
            <field name="res_model">fleet.vehicle.booking</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="vehicle_booking_calendar1" model="ir.ui.view">
            <field name="name">Vehicle booking calendar</field>
            <field name="model">fleet.vehicle.booking</field>
            <field name="arch" type="xml">
                <calendar string="Fleet Vehicle Booking"
                          date_start="from_date"
                          date_stop="to_date"
                          event_open_popup="true"
                          quick_add="false"
                          mode="month"
                          color="book_number"
                          form_view_id="%(aspl_vehicle_rental.action_fleet_calender_vehicle_booking1)s">
                    <field name="book_number" filters="1"/>
                </calendar>
            </field>
        </record>

        <menuitem id="fleet_vehicle_main_menu" name="Vehicle Rental"/>
        <menuitem id="fleet_vehicle_booking_menu" name="Vehicle" parent="fleet_vehicle_main_menu" sequence="2"/>
        <menuitem id="feet_vehicle_booking_sub_menu" name="Inquiry" parent="fleet_vehicle_booking_menu"
                  action="crm.action_your_pipeline" sequence="1"/>
        <menuitem id="feet_vehicle_quick_booking_menu" name="Quick Search" parent="fleet_vehicle_booking_menu"
                  action="action_fleet_quick_vehicle_booking" sequence="3"/>


        <menuitem id="feet_vehicle_calender_booking_menu" name="Vehical Booking" parent="fleet_vehicle_booking_menu"
                  action="aspl_vehicle_rental.action_fleet_calender_vehicle_booking1" sequence="6"/>

    </data>
</odoo>
