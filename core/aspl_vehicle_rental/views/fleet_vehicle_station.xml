<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="fleet_vehicle_station_form_id" model="ir.ui.view">
            <field name="name">Auto Station</field>
            <field name="model">fleet.vehicle.station</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="name" string="Auto Station"/>
                            <h1>
                                <field name="name" placeholder="Auto Station"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="short_name"/>
                            </group>
                            <group>
                                <field name="address_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="fleet_vehicle_station_tree_id" model="ir.ui.view">
            <field name="name">Auto Station</field>
            <field name="model">fleet.vehicle.station</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="short_name"/>
                    <field name="address_id"/>
                </tree>
            </field>
        </record>

        <record id="action_fleet_station_move" model="ir.actions.act_window">
            <field name="name">Auto Station</field>
            <field name="res_model">fleet.vehicle.station</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="fleet_vehicle_station_menu" name="Auto Station" parent="vehicle_configration_menu"/>
        <menuitem id="fleet_vehicle_station" name="Auto Station" parent="fleet_vehicle_station_menu"
                  action="action_fleet_station_move"/>

    </data>
</odoo>