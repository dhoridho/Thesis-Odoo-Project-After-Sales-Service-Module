<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="fleet_vehicle_inquiry" model="ir.ui.view">
            <field name="name">vehicle Enquiry</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_sale_quotations_new']" position="replace">
                    <button string="Vehicle Quotation" name="%(action_vehicle_order_id_new)d" type="action"
                            class="oe_highlight" context="{'search_default_partner_id':
                        partner_id, 'default_customer_name': partner_id, 'default_from_date':
                        from_date, 'default_to_date': to_date, 'default_vehicle_type_id':vehicle_type,
                        'default_source_id': source_id, 'default_opportunity_id':active_id}"/>
                </xpath>
                <xpath expr="//field[@name='date_deadline']" position="after">
                    <field name="vehicle_model"/>
                    <field name="from_date"/>
                    <field name="to_date"/>
                    <field name="vehicle_type"/>
                </xpath>
                <xpath expr="//button[@name='action_view_sale_quotation']" position="replace">
                        <button class="oe_stat_button" type="action" name="%(vehicle_action_quotations)d"
                                icon="fa-pencil-square-o" context="{'default_customer_name':
                            partner_id, 'search_default_draft': 1}">
                            <div class="o_stat_info">
                                <field name="sale_number" class="o_stat_value"/>
                                <span class="o_stat_text">Quotation(v)</span>
                            </div>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
