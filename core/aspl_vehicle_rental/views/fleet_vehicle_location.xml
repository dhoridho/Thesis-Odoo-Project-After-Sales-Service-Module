<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="fleet_vehicle_location_form_id" model="ir.ui.view">
            <field name="name">Vehicle Location</field>
            <field name="model">fleet.vehicle.location</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="name" string="Location Name"/>
                            <h1>
                                <field name="name" placeholder="Location Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="location_id"/>
                            </group>
                            <group>
                                <field name="station_id"/>
                                <field name="location_type"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="fleet_vehicle_location_tree_id" model="ir.ui.view">
            <field name="name">Vehicle Location</field>
            <field name="model">fleet.vehicle.location</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="complete_name"/>
                    <field name="station_id"/>
                    <field name="location_type"/>
                </tree>
            </field>
        </record>

        <record id="action_fleet_location_move" model="ir.actions.act_window">
            <field name="name">Vehicle Location</field>
            <field name="res_model">fleet.vehicle.location</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="fleet_vehicle_location_menu" name="Auto Station Locations" parent="fleet_vehicle_station_menu"
                  action="action_fleet_location_move"/>
    </data>
</odoo>
