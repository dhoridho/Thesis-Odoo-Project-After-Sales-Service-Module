                            <center>
                                <h1 style="margin-bottom: 30px;font-weight: bold;"><span
                                        t-esc="feedback_template.name"/></h1>
                            </center>
                            <t t-foreach="feedback_template.question_ids" t-as="question">
                                <div class="feedback_question">
                                    <span class="number" t-esc="number"/>
                                    <span class="question_content">
                                        <t t-esc="question.name"/>
                                    </span>
                                    <div class="feedback_option col-md-12">
                                        <t t-if="question.question_type == 'normal'">
                                            <table class="table table-condensed" style="width: 70%;">
                                                <t t-foreach="question.answer_ids" t-as="answer">
                                                    <tr>
                                                        <td>
                                                            <t t-if="question.answer_mode == 'single'">
                                                                <label>
                                                                    <input type="radio" id="answer_single_id"
                                                                           t-att-name="question.id"
                                                                           t-att-value='answer.id'/>
                                                                    <span class="answer_content" t-esc="answer.answer"/>
                                                                </label>
                                                            </t>
                                                            <t t-if="question.answer_mode == 'multiple'">
                                                                <label>
                                                                    <input type="checkbox" id="check_single_boxes"
                                                                           t-att-name="'group-%s'%(answer.id)"
                                                                           t-att-value="question.id"/>
                                                                    <span class="answer_content" t-esc="answer.answer"/>
                                                                </label>
                                                            </t>
                                                        </td>
                                                    </tr>
                                                </t>
                                            </table>
                                        </t>

                                        <t t-if="question.add_comment">
                                            <div class="form-group col-lg-8">
                                                <textarea class="form-control" rows="3" cols="70"
                                                          t-att-name="'comment-%s'%(question.id)"
                                                          placeholder="Comment..." required="True"/>
                                            </div>
                                        </t>
                                        <t t-if="question.question_type == 'widget'">
                                            <t t-if="question.rate_type=='star'">
                                                <div class="rate col-md-12">
                                                    <input type="radio" id="star5" t-att-name="'rate-%s'%(question.id)"
                                                           value="5"/>
                                                    <label for="star5" title="text">5 stars</label>
                                                    <input type="radio" id="star4" t-att-name="'rate-%s'%(question.id)"
                                                           value="4"/>
                                                    <label for="star4" title="text">4 stars</label>
                                                    <input type="radio" id="star3" t-att-name="'rate-%s'%(question.id)"
                                                           value="3"/>
                                                    <label for="star3" title="text">3 stars</label>
                                                    <input type="radio" id="star2" t-att-name="'rate-%s'%(question.id)"
                                                           value="2"/>
                                                    <label for="star2" title="text">2 stars</label>
                                                    <input type="radio" id="star1" t-att-name="'rate-%s'%(question.id)"
                                                           value="1"/>
                                                    <label for="star1" title="text">1 star</label>
                                                </div>
                                            </t>
                                            <t t-if="question.rate_type=='emoji'">
                                                <div class="rating">
                                                    <input type="radio" id="rating1"
                                                           t-att-name="'rate-%s'%(question.id)" value="1"
                                                           style="position: absolute;display: none;"/>
                                                    <label for="rating1" class="rating1">ðŸ˜¶</label>
                                                    <input type="radio" id="rating2"
                                                           t-att-name="'rate-%s'%(question.id)" value="2"
                                                           style="position: absolute;display: none;"/>
                                                    <label for="rating2" class="rating2">ðŸ˜¶</label>
                                                    <input type="radio" id="rating3"
                                                           t-att-name="'rate-%s'%(question.id)" value="3"
                                                           style="position: absolute;display: none;"/>
                                                    <label for="rating3" class="rating3">ðŸ˜¶</label>
                                                    <input type="radio" id="rating4"
                                                           t-att-name="'rate-%s'%(question.id)" value="4"
                                                           style="position: absolute;display: none;"/>
                                                    <label for="rating4" class="rating4">ðŸ˜¶</label>
                                                    <input type="radio" id="rating5"
                                                           t-att-name="'rate-%s'%(question.id)" value="5"
                                                           style="position: absolute;display: none;"/>
                                                    <label for="rating5" class="rating5">ðŸ˜¶</label>
                                                </div>
                                            </t>
                                        </t>
                                    </div>
                                    <t t-set="number" t-value="number + 1"/>
                                </div>
                            </t>
                            <div>
                                <button type="submit" class="btn-submit submit-button mb16">
                                    <i class="fa fa-floppy-o" aria-hidden="true"/>
                                    Submit
                                </button>
                            </div>
                        </t>
                        <t t-if="error">
                            <div class="alert alert-info" role="alert">
                                <span t-esc="error"/>
                            </div>
                        </t>
                    </form>
                </div>
            </t>
        </template>

        <template id="customer_registration_template" name="CustomerRegistration">
            <t t-call="website.layout">
                <div class="container" style="margin-top: 30px;">
                    <div class="row">
                        <div class="col-md-8">
                            <form action="/create_customer" method="post" class="checkout_autoformat">
                                <div class="form-row">
                                    <div class="col-lg-12">
                                        <label class="col-form-label" for="name">Name</label>
                                        <input class="form-control" type="text" name="name" required="blank"/>
                                    </div>
                                    <div class="form-group col-lg-6">
                                        <label class="col-form-label" for="email">E-mail</label>
                                        <input class="form-control" type="email" name="email"/>
                                    </div>
                                    <div class="form-group col-lg-6">
                                        <label class="col-form-label" for="phone">Phone</label>
                                        <input class="form-control" type="tel" name="phone"/>
                                    </div>
                                    <div class="w-100"/>
                                    <div class="form-group col-lg-6">
                                        <label class="col-form-label" for="company">Company Name</label>
                                        <input class="form-control" type="text" name="company"/>
                                    </div>
                                    <div class="form-group col-lg-6">
                                        <label class="col-form-label" for="vat">TIN/VAT</label>
                                        <input class="form-control" type="text" name="vat"/>
                                    </div>
                                    <div class="col-lg-12">
                                        <label class="col-form-label" for="street">Street and Number</label>
                                        <input class="form-control" type="text" name="street"/>
                                    </div>
                                    <div class="col-lg-12">
                                        <label class="col-form-label" for="street2">Street2</label>
                                        <input class="form-control" type="text" name="street2"/>
                                    </div>
                                    <div class="form-group col-lg-8">
                                        <label class="col-form-label" for="city">City</label>
                                        <input class="form-control" type="text" name="city"/>
                                    </div>
                                    <div class="form-group col-lg-4">
                                        <label class="col-form-label" for="zip">Zip</label>
                                        <input class="form-control" type="text" name="zip"/>
                                    </div>
                                    <div class="form-group col-lg-6">
                                        <label class="col-form-label" for="country_id">Country</label>
                                        <select id="country_id" name="country_id" class="form-control">
                                            <option value="">Country...</option>
                                            <t t-foreach="countries" t-as="c">
                                                <option t-att-value="c.id"
                                                        t-att-selected="c.id == (country and country.id or -1)">
                                                    <t t-esc="c.name"/>
                                                </option>
                                            </t>
                                        </select>
                                    </div>
                                </div>
                                <div>
                                    <button type="submit" class="btn_primary">
                                        Submit
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="customer_feedback_submit_template" name="SunmitFeedback">
            <t t-call="website.layout">
                <div class="container">
                    <center>
                        <div>
                            <img src="/aspl_vehicle_rental/static/src/img/feedback_submitted.png" alt="Smiley face"
                                 height="150" width="150"/>
                        </div>
                        <div class="main">
                            <h2>Thanks for giving the Feedback.</h2>
                        </div>
                    </center>
                </div>
            </t>
        </template>
    </data>
</odoo>
