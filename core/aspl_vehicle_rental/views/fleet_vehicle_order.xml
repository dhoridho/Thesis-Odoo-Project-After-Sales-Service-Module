<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>

        <record id="fleet_vehicle_order_search" model="ir.ui.view">
            <field name="name">Rental Order</field>
            <field name="model">fleet.vehicle.order</field>
            <field name="arch" type="xml">
                <search>
                    <field name="res_number" filter_domain="[('res_number','ilike',self)]" string="Order Number"/>
                    <field name="customer_name" filter_domain="[('customer_name','ilike',self)]" string="Customer"/>
                </search>
            </field>
        </record>

        <record id="fleet_vehicle_order_form_id" model="ir.ui.view">
            <field name="name">Rental Order</field>
            <field name="model">fleet.vehicle.order</field>
            <field name="arch" type="xml">
                <form string="Vehicle Order">
                    <header>
                        <field name="state" widget="statusbar"/>
                        <button name="send_vehicle_quote" string="Send by Email" type="object" class="oe_highlight"/>
                        <button name="confirm" string="Confirm" type="object" class="oe_highlight" states="book,draft"/>
                        <button name="cancel" string="Cancel" type="object" class="oe_highlight"
                                attrs="{'invisible': [('state', 'in', ('cancel', 'close'))]}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button type="object" class="oe_stat_button" icon="fa-truck"
                                    name="action_view_order_moves"
                                    attrs="{'invisible': [('move_count','=',0)]}">
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="move_count"/>
                                    </span>
                                    <span class="o_stat_text">Move</span>
                                </div>
                            </button>
                            <button type="object" class="oe_stat_button" icon="fa-pencil-square-o"
                                    name="action_view_order_invoices"
                                    attrs="{'invisible': [('invoice_count','=',0)]}">
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="invoice_count"/>
                                    </span>
                                    <span class="o_stat_text">Invoiced</span>
                                </div>
                            </button>
                            <button type="object" class="oe_stat_button" icon="fa-book"
                                    name="action_view_order_contract"
                                    attrs="{'invisible': [('contract_count','=',0)]}">
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="contract_count"/>
                                    </span>
                                    <span class="o_stat_text">Contract</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="res_number" placeholder="New"/>
                            </h1>
                        </div>
                        <group col="4">
                            <field name="customer_name" required="1"/>
                            <field name="book_date"/>
                            <field name="from_date" required="1"/>
                            <field name="to_date" required="1"/>
                            <field name="start_date" invisible="1"/>
                            <field name="end_date" invisible="1"/>
                            <field name="is_agreement"/>
                            <field name="account_payment_term"/>
                            <field name="station_id"/>
                            <field name="vehicle_type_id" required="1"/>
                            <field name="company_id"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="count"/>
                            <field name="is_true" invisible="1"/>
                            <field name="pricelist_id"/>
                            <field name="return_date" invisible="1"/>
                        </group>
                        <group>
                            <group col="2">
                            </group>
                            <group col="2">
                            </group>
                        </group>
                        <notebook>
                            <page name="rental_order" string="Rental Order">
                                <field name="vehicle_order_lines_ids">
                                    <tree editable="bottom">
                                        <field name="vehicle_id" context="{'from_date':parent.from_date, 'to_date':parent.to_date,
                                            'vehicle_type':parent.vehicle_type_id,
                                            'from_vehicle_order': True}"/>
                                        <field name="name"/>
                                        <field name="vehicle_order_id" invisible="1"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="price_based"/>
                                        <field name="enter_days" attrs="{'invisible':[('price_based','=','per_km')]}"/>
                                        <field name="enter_kms" attrs="{'invisible':[('price_based','=','per_day')]}"/>
                                        <field name="driver_id" context="{'from_date':parent.from_date, 'to_date':parent.to_date,
                                            'from_vehicle_order': True}"/>
                                        <field name="price"/>
                                        <field name="tax_id" widget="many2many_tags"/>
                                        <field name="sub_total" widget="monetary"
                                               options="{'currency_field': 'currency_id'}"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                    <label for="untaxed_amount"/>
                                    <field name="untaxed_amount" nolabel="1" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"/>
                                    <label for="taxes"/>
                                    <field name="taxes" nolabel="1" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"/>
                                    <label for="extra_charges"/>
                                    <field name="extra_charges" nolabel="1" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"/>
                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                        <label for="total_amount"/>
                                    </div>
                                    <field name="total_amount" nolabel="1" class="oe_subtotal_footer_separator"
                                           widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </group>
                                <group>
                                    <field name="terms_condition"/>
                                </group>
                            </page>
                            <page name="other_info" string="Other Information">
                                <group>
                                    <group>
                                        <field name="user_id"/>
                                        <field name="invoice_status"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="fleet_vehicle_order_tree" model="ir.ui.view">
            <field name="name">Driver Schedule</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" postion="inside">
                    <page string="Driver Schedule">
                        <field name="driver_schedule_details_ids">
                            <tree editable="bottom">
                                <field name="vehicle_id"/>
                                <field name="from_date"/>
                                <field name="to_date"/>
                                <field name="status"/>
                                <field name="order_line_id"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>Warning

        <record id="fleet_vehicle_driver_schedule" model="ir.ui.view">
            <field name="name">Rental Order</field>
            <field name="model">fleet.vehicle.order</field>
            <field name="arch" type="xml">
                <tree decoration-muted="state=='cancel'" decoration-info="state=='draft'"
                      decoration-success="state=='confirm'">
                    <field name="customer_name"/>
                    <field name="res_number"/>
                    <field name="from_date"/>
                    <field name="to_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="inherit_account_invoice_form" model="ir.ui.view">
            <field name="name">account.move</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_tax']" position="after">
                    <label for="extra_charges"/>
                    <field name="extra_charges" nolabel="1" widget='monetary'/>
                </xpath>

                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="replace"/>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='name']" position="replace"/>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='quantity']" position="replace"/>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_unit']" position="replace"/>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='tax_ids']" position="replace"/>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_subtotal']" position="replace"/>
                <xpath expr="//field[@name='invoice_line_ids']/tree" position="inside">
                    <field name="vehicle_id"/>
                    <field name="name" string="Description"/>
                    <field name="account_id" groups="account.group_account_user" domain="[('company_id',
	                            '=', parent.company_id), ('internal_type', '=', 'other'),
	                            ('deprecated', '=', False)]"/>
                    <field name="quantity" string="Day/KM"/>
                    <field name="price_unit"/>
                    <field name="discount" groups="base.group_no_one"/>
                    <field name="tax_ids" widget="many2many_tags"
                           domain="[('type_tax_use', '=?', parent.invoice_filter_type_domain), ('company_id', '=', parent.company_id)]"
                           context="{'append_type_to_tax_name': not parent.invoice_filter_type_domain}"
                           options="{'no_create': True}"
                           optional="show"/>
                    <field name="price_subtotal"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_fleet_rental_order_pivot">
            <field name="name">rental.order.pivot</field>
            <field name="model">fleet.vehicle.order</field>
            <field name="arch" type="xml">
                <pivot string="Rental Orders">
                    <field name="customer_name" type="row"/>
                    <field name="count" interval="month" type="col"/>
                    <field name="total_amount" type="measure"/>
                </pivot>
            </field>
        </record>

        <record model="ir.ui.view" id="view_fleet_rental_order_graph">
            <field name="name">rental.order.graph</field>
            <field name="model">fleet.vehicle.order</field>
            <field name="arch" type="xml">
                <graph string="Rental Orders">
                    <field name="customer_name" type="row"/>
                    <field name="total_amount" type="col"/>
                </graph>
            </field>
        </record>

        <record id="action_vehicle_order_id" model="ir.actions.act_window">
            <field name="name">Rental Order</field>
            <field name="res_model">fleet.vehicle.order</field>
            <field name="view_mode">tree,form,calendar</field>
            <field name="context">{'search_default_undone': 1}</field>
        </record>

        <record id="action_vehicle_order_id_new" model="ir.actions.act_window">
            <field name="name">Rental Order</field>
            <field name="res_model">fleet.vehicle.order</field>
            <field name="view_mode">form,tree</field>
        </record>

        <record id="action_rental_order_analysis" model="ir.actions.act_window">
            <field name="name">Rental Order</field>
            <field name="res_model">fleet.vehicle.order</field>
            <field name="view_mode">graph,pivot</field>
        </record>

        <record id="vehicle_booking_calendar" model="ir.ui.view">
            <field name="name">Rental order</field>
            <field name="model">fleet.vehicle.order</field>
            <field name="arch" type="xml">
                <calendar string="Vehicle" date_start="from_date" date_stop="to_date" event_open_popup="true"
                          quick_add="false" form_view_id="%(aspl_vehicle_rental.fleet_vehicle_order_form_id)s"
                          event_limit="3" color="customer_name" mode="month">
                    <field name="customer_name" filters="1"/>
                </calendar>
            </field>
        </record>

        <record id="vehicle_action_quotations" model="ir.actions.act_window">
            <field name="name">Vehicle Quotations</field>
            <field name="res_model">fleet.vehicle.order</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('opportunity_id', '=', active_id)]</field>
            <field name="context">
                {'search_default_opportunity_id': [active_id], 'default_opportunity_id': active_id}
            </field>
        </record>


        <menuitem id="vehicle_order_menu" name="Rental Order" action="action_vehicle_order_id"
                  parent="fleet_vehicle_booking_menu" sequence="3"/>

        <menuitem id="fleet_vehicle_analysis" name="Analysis" parent="fleet_vehicle_main_menu" sequence="5"/>

        <menuitem id="vehicle_rental_order_analysis" name="Rental Orders" parent="fleet_vehicle_analysis"
                  action="action_rental_order_analysis" sequence="2"/>

    </data>
</odoo>
