<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="form_dev_purchase_down_payment_inherit" model="ir.ui.view">
        <field name="name">form.dev.purchase.down.payment</field>
        <field name="model">purchase.down.payment</field>
        <field name="inherit_id" ref="dev_purchase_down_payment.form_dev_purchase_down_payment"/>
        <field name="arch" type="xml">
            <xpath expr="//div" position="attributes">
              <attribute name="attrs">{'invisible': [('down_payment_by', 'not in', ('fixed','percentage', 'bill'))]}</attribute>
            </xpath>
            <xpath expr="//label[@for='amount']" position="attributes">
              <attribute name="attrs">{'invisible': [('down_payment_by', 'not in', ('fixed','percentage', 'bill'))]}</attribute>
            </xpath>
            <xpath expr="//field[@name='amount']" position="attributes">
              <attribute name="attrs">{'required': [('down_payment_by', 'not in', ('fixed','percentage', 'bill'))]}</attribute>
            </xpath>
        </field>
    </record>

</odoo>