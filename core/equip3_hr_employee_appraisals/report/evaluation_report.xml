<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_evaluation_sheet">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h1>
                            <b>Evaluation Report</b>
                        </h1>
                        <div class="row mt32 mb32">
                            <div class="col-4">
                                <div>
                                    <strong>Employee:</strong>
                                    <span t-field="o.employee_id.name"/>
                                </div>
                                <div>
                                    <strong>Job Position:</strong>
                                    <span t-field="o.employee_id.job_id.name"/>
                                </div>
                                <div>
                                    <strong>Department:</strong>
                                    <span t-field="o.employee_id.department_id.name"/>
                                </div>
                                <div>
                                    <strong>Manager:</strong>
                                    <span t-field="o.manager_id.name"/>
                                </div>
                            </div>
                            <div class="col-4">
                            </div>
                            <div class="col-4">
                                <div>
                                    <strong>Period:</strong>
                                    <span t-field="o.date_range_id.name"/>
                                </div>
                                <div>
                                    <strong>Start Date:</strong>
                                    <span t-field="o.date_start"/>
                                </div>
                                <div>
                                    <strong>End Date:</strong>
                                    <span t-field="o.date_end"/>
                                </div>
                                <div>
                                    <strong>Overall Score:</strong>
                                    <strong>
                                        <span t-field="o.overal_score"/>
                                    </strong>
                                </div>
                                <div>
                                    <strong>Nine Box Grid:</strong>
                                    <strong>
                                        <span t-field="o.n_grid_id.category"/>
                                    </strong>
                                </div>
                            </div>
                        </div>
                        <br/>
                        <h3>
                            <b>Performances</b>
                        </h3>
                        <table class="table table-sm" style="border: 2px solid black !important;">
                            <thead>
                                <tr>
                                    <th style="border: 2px solid black !important;">KPI</th>
                                    <th class="text-center" style="border: 2px solid black !important;">Weightage</th>
                                    <th class="text-center" style="border: 2px solid black !important;">Target</th>
                                    <th class="text-center" style="border: 2px solid black !important;">Self
                                        Assessment
                                    </th>
                                    <th class="text-center" style="border: 2px solid black !important;">Final
                                        Assessment
                                    </th>
                                    <th class="text-center" style="border: 2px solid black !important;">Assessment
                                        Score
                                    </th>
                                    <th class="text-center" style="border: 2px solid black !important;">Weightage
                                        Score
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.performances_line_ids" t-as="line">
                                    <td style="border-left: 2px solid black; border-right: 2px solid black; border-top: 0px; border-bottom:0px;">
                                        <span t-field="line.name"/>
                                    </td>
                                    <td class="text-center"
                                        style="border-left: 2px solid black; border-right: 2px solid black; border-top: 0px; border-bottom:0px;">
                                        <span t-field="line.weightage"/>
                                    </td>
                                    <td class="text-center"
                                        style="border-left: 2px solid black; border-right: 2px solid black; border-top: 0px; border-bottom:0px;">
                                        <span t-field="line.kpi_target"/>
                                    </td>
                                    <td class="text-center"
                                        style="border-left: 2px solid black; border-right: 2px solid black; border-top: 0px; border-bottom:0px;">
                                        <span t-field="line.employee_rate"/>
                                    </td>
                                    <td class="text-center"
                                        style="border-left: 2px solid black; border-right: 2px solid black; border-top: 0px; border-bottom:0px;">
                                        <span t-field="line.manager_rate"/>
                                    </td>
                                    <td class="text-center"
                                        style="border-left: 2px solid black; border-right: 2px solid black; border-top: 0px; border-bottom:0px;">
                                        <span t-field="line.achievement_score"/>
                                    </td>
                                    <td class="text-center"
                                        style="border-left: 2px solid black; border-right: 2px solid black; border-top: 0px; border-bottom:0px;">
                                        <span t-field="line.weightage_score"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="row justify-content-end">
                            <div class="col-4">
                                <table class="table">
                                    <tr>
                                        <td class="text-right" style="border:0px; padding:0px;">
                                            <strong>Total:</strong>
                                        </td>
                                        <td class="text-right" style="border:0px; padding:0px;">
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="text-right" style="border:0px; padding:0px;">
                                            <strong>Weightage:</strong>
                                        </td>
                                        <td class="text-right" style="border:0px; padding:0px;">
                                            <strong>
                                                <span t-field="o.total_weightage_performance"/>
                                            </strong>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="text-right" style="border:0px; padding:0px;">
                                            <strong>Weightage Score:</strong>
                                        </td>
                                        <td class="text-right" style="border:0px; padding:0px;">
                                            <strong>
                                                <span t-field="o.total_weightage_score_performance"/>
                                            </strong>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <br/>
                        <h3>
                            <b>Competencies</b>
                        </h3>
                        <table class="table table-sm" style="border: 2px solid black !important;">
                            <thead>
                                <tr>
                                    <th style="border: 2px solid black !important;">Competency Areas</th>
                                    <th class="text-center" style="border: 2px solid black !important;">Weightage</th>
                                    <th class="text-center" style="border: 2px solid black !important;">Target</th>
                                    <th class="text-center" style="border: 2px solid black !important;">Self
                                        Assessment
                                    </th>
                                    <th class="text-center" style="border: 2px solid black !important;">Final
                                        Assessment
                                    </th>
                                    <th class="text-center" style="border: 2px solid black !important;">Competency
                                        Match
                                    </th>
                                    <th class="text-center" style="border: 2px solid black !important;">Competency GAP
                                    </th>
                                    <th class="text-center" style="border: 2px solid black !important;">Weightage
                                        Score
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.competencies_line_ids" t-as="line">
                                    <td style="border-left: 2px solid black; border-right: 2px solid black; border-top: 0px; border-bottom:0px;">
                                        <span t-field="line.name"/>
                                    </td>
                                    <td class="text-center"
                                        style="border-left: 2px solid black; border-right: 2px solid black; border-top: 0px; border-bottom:0px;">
                                        <span t-field="line.weightage"/>
                                    </td>
                                    <td class="text-center"
                                        style="border-left: 2px solid black; border-right: 2px solid black; border-top: 0px; border-bottom:0px;">
                                        <span t-field="line.target_score_id.name"/>
                                    </td>
                                    <td class="text-center"
                                        style="border-left: 2px solid black; border-right: 2px solid black; border-top: 0px; border-bottom:0px;">
                                        <span t-field="line.score.name"/>
                                    </td>
                                    <td class="text-center"
                                        style="border-left: 2px solid black; border-right: 2px solid black; border-top: 0px; border-bottom:0px;">
                                        <span t-field="line.final_assessment_id.name"/>
                                    </td>
                                    <td class="text-center"
                                        style="border-left: 2px solid black; border-right: 2px solid black; border-top: 0px; border-bottom:0px;">
                                        <span t-field="line.competency_match"/>
                                    </td>
                                    <td class="text-center"
                                        style="border-left: 2px solid black; border-right: 2px solid black; border-top: 0px; border-bottom:0px;">
                                        <span t-field="line.competency_gap"/>
                                    </td>
                                    <td class="text-center"
                                        style="border-left: 2px solid black; border-right: 2px solid black; border-top: 0px; border-bottom:0px;">
                                        <span t-field="line.weightage_score"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="row justify-content-end">
                            <div class="col-4">
                                <table class="table">
                                    <tr>
                                        <td class="text-right" style="border:0px; padding:0px;">
                                            <strong>Total:</strong>
                                        </td>
                                        <td class="text-right" style="border:0px; padding:0px;">
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="text-right" style="border:0px; padding:0px;">
                                            <strong>Weightage:</strong>
                                        </td>
                                        <td class="text-right" style="border:0px; padding:0px;">
                                            <strong>
                                                <span t-field="o.total_weightage"/>
                                            </strong>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="text-right" style="border:0px; padding:0px;">
                                            <strong>Competency Match (%):</strong>
                                        </td>
                                        <td class="text-right" style="border:0px; padding:0px;">
                                            <strong>
                                                <span t-field="o.total_competency_match"/>
                                            </strong>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="text-right" style="border:0px; padding:0px;">
                                            <strong>Competency Gap:</strong>
                                        </td>
                                        <td class="text-right" style="border:0px; padding:0px;">
                                            <strong>
                                                <span t-field="o.total_competency_gap"/>
                                            </strong>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="text-right" style="border:0px; padding:0px;">
                                            <strong>Weightage Score:</strong>
                                        </td>
                                        <td class="text-right" style="border:0px; padding:0px;">
                                            <strong>
                                                <span t-field="o.total_weightage_score"/>
                                            </strong>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <record id="action_report_evaluation_sheet" model="ir.actions.report">
        <field name="name">Evaluation Report</field>
        <field name="model">employee.performance</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">equip3_hr_employee_appraisals.report_evaluation_sheet</field>
        <field name="report_file">equip3_hr_employee_appraisals.report_evaluation_sheet</field>
        <field name="print_report_name">'Evaluation - %s - %s' % (object.employee_id.name, (object.name).replace('/',
            ''))
        </field>
        <field name="binding_model_id" ref="model_employee_performance"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
