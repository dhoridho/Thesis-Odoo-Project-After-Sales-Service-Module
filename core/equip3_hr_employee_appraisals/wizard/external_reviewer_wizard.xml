<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="hr_appraisal_external_reviewer_wizard_form">
            <field name="name">hr.appraisal.external.reviewer.wizard.form</field>
            <field name="model">hr.appraisal.external.reviewer.wizard</field>
            <field name="arch" type="xml">
                <form string="External Feedback Subject Configuration">
                    <group col="1">
                        <field name="description" readonly="1"/>
                        <group col="2">
                            <field name="appraisal_id" readonly="context.get('default_appraisal_id')" invisible="1"/>
                            <field name="performance_review_id" readonly="context.get('default_appraisal_id')" invisible="1"/>
                            <field name="survey_id" readonly="context.get('default_survey_id')" invisible="1"/>
                        </group>
                        <field name="line_ids">
                            <tree editable="bottom">
                                <field name="company_name" required="1"/>
                                <field name="reviewer_name" required="1"/>
                                <field name="email" widget="email" required="1"/>
                                <field name="work_phone" widget="phone"/>
                                <field name="relation"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button string="Send" name="action_send" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="hr_appraisal_external_reviewer_wizard_message_form">
            <field name="name">hr.appraisal.external.reviewer.wizard.message.form</field>
            <field name="model">hr.appraisal.external.reviewer.wizard.message</field>
            <field name="arch" type="xml">
                <form string="Message">
                    <p>
                        <b>Every feedback has been sent successfully!</b>
                    </p>
                    <footer>
                        <button string="Ok" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
