<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="hr_appraisal_comptencies_match_wizard_form">
            <field name="name">competencies.match.wizard.form</field>
            <field name="model">competencies.match.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="competencies_match_id"  readonly="1" force_save="1"/>
                            <field name="suggestion_id"  readonly="1" force_save="1"/>
                            <field name="job_id"  readonly="1"/>
                            <field name="department_id" readonly="1"/>
                            <field name="competency_match" readonly="1"/>
                            <!-- <field name="task_id" readonly="0" required="1"/> -->
                            <field name="task_ids" widget="many2many_tags" required="1"/>
                            <field name="deadline" readonly="0" required="1"/>
                        </group>
                        <footer>
                            <button string="Save" name="action_save" type="object" class="btn-primary"/>
                            <button string="Discard" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_appraisal_comptencies_match_wizard_action" model="ir.actions.act_window">
            <field name="name">Suggestion Competencies Match</field>
            <field name="res_model">competencies.match.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
