<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>



    <record id="performance_cascade_wizard_form" model="ir.ui.view">
        <field name="name">performance.cascade.wizard.form</field>
        <field name="model">performance.cascade.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirmation Message">
                <sheet>
                    <group>
                            <field name="kpi_id" string="KPI" />
                            <field name="performance_line_id"  invisible="1"/>
                            <field name="weightage" />
                            <field name="kpi_target" />
                            <field name="date_range_id" invisible="1"/>
                  
                    
                    </group>

                    <notebook>
                        <page name="employee" string="Employees">
                            <field name="line_ids" context="{'default_date_range_id':date_range_id}">
                                <tree editable="bottom">
                                    <field name="user_id" invisible="1"/>
                                    <field name="date_range_id" invisible="1"/>
                                    <field name="kpi_domain_ids" invisible="1" widget="many2many_tags"/>
                                    <field name="employee_domain_ids" invisible="1" widget="many2many_tags"/>
                                    <field name="employee_id" required="1" domain="[('id','in',employee_domain_ids)]" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                    <field name="department_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}" />
                                    <field name="job_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                    <field name="kpi_id" domain="[('id','in',kpi_domain_ids)]" required="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                    <field name="assign_weightage" string="Assign Weightage (%)" required="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    
                </sheet>
                <footer>
                    <button name="submit" type="object" string="Submit" class="oe_highlight"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>


