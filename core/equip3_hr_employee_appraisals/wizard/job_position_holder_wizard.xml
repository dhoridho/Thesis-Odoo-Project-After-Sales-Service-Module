<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="hr_appraisal_job_position_holder_wizard">
            <field name="name">job.position.holder.wizard.form</field>
            <field name="model">job.position.holder.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" readonly="1" />
                            <field name="job_id" readonly="1" />
                            <field name="email" readonly="1"/>
                            <field name="current_score" readonly="1"/>

                            <notebook>
                                <page name="parameter_Result" string="Parameter Result">
                                    <field name="position_holder_parameter_wizard_ids">
                                        <tree editable="bottom">
                                            <field name="name" />
                                            <field name="value_str" />
                                            <field name="value_number" />
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        </group>
                        <footer>
                            <button string="Close" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_appraisal_job_position_holder_wizard_action" model="ir.actions.act_window">
            <field name="name">Job Position Holder</field>
            <field name="res_model">job.position.holder.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
