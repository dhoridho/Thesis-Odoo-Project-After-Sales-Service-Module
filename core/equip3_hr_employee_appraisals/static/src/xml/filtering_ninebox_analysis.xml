<?xml version="1.0" encoding="utf-8"?>
<templates id="filtering_ninebox_filtering_template" xml:space="preserve">
    <div t-name="equip3_hr_employee_appraisals.ControlPanel" t-inherit="web.ControlPanel" t-inherit-mode="primary" owl="1">
        <xpath expr="//div[contains(@class, 'o_search_panel_hide')]" position="after">
            <div class="ninebox_filter_container">
                <div class="row">
                    <div class="col-6">
                        <select t-on-change="do_keypress" class="o_input evaluation_period">
                            <option value="">Select Period</option>
                        </select>
                    </div>
                    <div class="col-6">
                        <select t-on-change="do_keypress" class="o_input department">
                            <option value="">Select Department</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">
                        <select t-on-change="do_keypress" class="o_input employee">
                            <option value="">Select Employee</option>
                        </select>
                    </div>
                    <div class="col-6">
                        <select t-on-change="do_keypress" class="o_input job_position">
                            <option value="">Select Job Position</option>
                        </select>
                    </div>
                </div>
            </div>
        </xpath>
    </div>
</templates>
