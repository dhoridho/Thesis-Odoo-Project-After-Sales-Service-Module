<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="mail_template_peer_reviews" model="mail.template">
            <field name="name">Peer Reviews</field>
            <field name="model_id" ref="model_employee_performance"/>
            <field name="email_from">noreply@mailing.hashmicro.com</field>
            <field name="subject">${ctx['title']} Feedback - ${ctx['employee_name']}</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px; font-size: 13px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hi ${ctx['reviewer_name']},
                        <br/>
                        <br/>
                        Here's an automatic email for the Feedback Request regarding ${ctx['employee_name']} with the position of ${ctx['job_position']}.<br/><br/>

                        Click the following button to access it:<br/>

                        <div style="margin: 16px 0px 16px 0px;">
                            <a href="${ctx.get('url_review')}"
                               style="background-color: #875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;">
                                Give Feedback
                            </a>
                        </div>
                        <br/><br/>
                        Thank you.
                    </p>
                </div>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>

        <record id="mail_template_task_challenge" model="mail.template">
            <field name="name">Tasks / Challenges</field>
            <field name="model_id" ref="model_employee_performance"/>
            <field name="email_from">noreply@mailing.hashmicro.com</field>
            <field name="subject">${ctx['title']}</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px; font-size: 13px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hi ${ctx['employee_name']},
                        <br/>
                        <br/>
                        Here's an automatic email for your Task / Challenge: ${ctx['title']}.<br/><br/>

                        Click the following button to access it:<br/>

                        <div style="margin: 16px 0px 16px 0px;">
                            <a href="${ctx.get('url_task_challenge')}"
                               style="background-color: #875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;">
                                Start Tasks / Challenges
                            </a>
                        </div>
                        <br/><br/>
                        Thank you.
                    </p>
                </div>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>

        <record id="mail_template_appraisals_self_evaluation" model="mail.template">
            <field name="name">Self Evaluation</field>
            <field name="model_id" ref="model_performance_planning"/>
            <field name="email_from">noreply@mailing.hashmicro.com</field>
            <field name="subject">Self Evaluation - ${ctx['employee_name']}</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px; font-size: 13px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hi ${ctx['employee_name']},
                        <br/>
                        <br/>
                        Here's an automatic email for the Self Evaluation.<br/><br/>

                        Click the following button to access it:<br/>

                        <div style="margin: 16px 0px 16px 0px;">
                            <a href="${ctx['url']}"
                               style="background-color: #875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;">
                                Start Self Evaluation
                            </a>
                        </div>
                        <br/><br/>
                        Thank you.
                    </p>
                </div>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>