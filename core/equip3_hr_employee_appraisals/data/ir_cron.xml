<odoo>
<data>
    <record id="hashmicro_achievement_update" model="ir.cron">
        <field name="name">Update Performance Achievement</field>
        <field eval="True" name="active"/>
        <field name="user_id" ref="base.user_root"/>
        <field name="nextcall" eval="(DateTime.now()).strftime('%Y-%m-%d 23:00:00')" />
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="model_id" ref="model_employee_performance"/>
        <field name="state">code</field>
        <field name="doall" eval="True"/>
        <field name="code">model.update_achievement()</field>
    </record>

    <record id="cron_auto_training" model="ir.cron">
        <field name="name">Cron Auto Training To Do</field>
        <field eval="True" name="active"/>
        <field name="user_id" ref="base.user_root"/>
        <field name="nextcall" eval="(DateTime.now()).strftime('%Y-%m-%d 23:00:00')" />
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="model_id" ref="model_employee_competencies_line"/>
        <field name="state">code</field>
        <field name="doall" eval="True"/>
        <field name="code">model.cron_auto_training()</field>
    </record>

    <record id="auto_get_training_plan" model="ir.cron">
        <field name="name">Cron Auto Training Plan Line</field>
        <field eval="True" name="active"/>
        <field name="user_id" ref="base.user_root"/>
        <field name="nextcall" eval="(DateTime.now()).strftime('%Y-%m-%d 23:00:00')" />
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="model_id" ref="model_employee_performance"/>
        <field name="state">code</field>
        <field name="doall" eval="True"/>
        <field name="code">model.auto_get_training_plan()</field>
    </record>

    <record id="auto_send_email_appraisals_feedback" model="ir.cron">
        <field name="name">Cron Auto Send Email Appraisals Feedback</field>
        <field eval="True" name="active"/>
        <field name="user_id" ref="base.user_root"/>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="model_id" ref="model_employee_performance"/>
        <field name="state">code</field>
        <field name="doall" eval="True"/>
        <field name="code">model.auto_send_email_appraisals_feedback()</field>
    </record>

    <record id="auto_send_email_appraisals_self_evaluation" model="ir.cron">
        <field name="name">Cron Auto Send Email Appraisals Self Evaluation</field>
        <field eval="True" name="active"/>
        <field name="user_id" ref="base.user_root"/>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="model_id" ref="model_performance_planning"/>
        <field name="state">code</field>
        <field name="doall" eval="True"/>
        <field name="code">model.get_auto_follow_up_self_evaluation()</field>
        <field name="nextcall" eval="datetime.now() + (datetime.now(pytz.timezone('Asia/Jakarta')).replace(hour=1, minute=0, second=0) - datetime.now(pytz.timezone('Asia/Jakarta'))) % timedelta(hours=24)"/>
    </record>
</data>


</odoo>