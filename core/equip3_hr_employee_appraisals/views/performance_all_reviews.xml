<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="performance_all_reviews_form" model="ir.ui.view">
            <field name="name">performance.all.reviews.form</field>
            <field name="model">performance.all.reviews</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="manager" string="Manager">
                                <group>
                                    <group>
                                        <field name="is_included_manager"/>
                                        <field name="manager_feedback_template_id" attrs="{'invisible':[('is_included_manager','=',False)]}" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                        <field name="manager_weightage" attrs="{'invisible':[('is_included_manager','=',False)]}"/>
                                        <field name="manager_max_reviewer" attrs="{'invisible':[('is_included_manager','=',False)]}"/>
                                    </group>
                                </group>
                            </page>
                            <page name="subordinate" string="Subordinate">
                                <group>
                                    <group>
                                        <field name="is_included_subordinate"/>
                                        <field name="subordinate_feedback_template_id" attrs="{'invisible':[('is_included_subordinate','=',False)]}" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                        <field name="subordinate_weightage" attrs="{'invisible':[('is_included_subordinate','=',False)]}"/>
                                        <field name="subordinate_max_reviewer" attrs="{'invisible':[('is_included_subordinate','=',False)]}"/>
                                    </group>
                                </group>
                            </page>
                            <page name="peer" string="Peer">
                                <group>
                                    <group>
                                        <field name="is_included_peer"/>
                                        <field name="peer_weightage" attrs="{'invisible':[('is_included_peer','=',False)]}"/>
                                        <field name="peer_max_reviewer" attrs="{'invisible':[('is_included_peer','=',False)]}"/>
                                    </group>
                                </group>
                                <field name="peer_reviewer_position_ids" attrs="{'invisible':[('is_included_peer','=',False)]}">
                                    <tree editable="bottom">
                                        <field name="job_position_ids" widget="many2many_tags" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                        <field name="feedback_template_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="external" string="External">
                                <group>
                                    <group>
                                        <field name="is_included_external"/>
                                        <field name="external_feedback_template_id" attrs="{'invisible':[('is_included_external','=',False)]}" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                        <field name="external_weightage" attrs="{'invisible':[('is_included_external','=',False)]}"/>
                                        <field name="external_max_reviewer" attrs="{'invisible':[('is_included_external','=',False)]}"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="performance_all_reviews_search" model="ir.ui.view">
            <field name="name">performance.all.reviews.search</field>
            <field name="model">performance.all.reviews</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="performance_all_reviews_tree" model="ir.ui.view">
            <field name="name">performance.all.reviews.tree</field>
            <field name="model">performance.all.reviews</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="performance_all_reviews_act_window" model="ir.actions.act_window">
            <field name="name">All Reviews</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">performance.all.reviews</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no data. Click here to add new All Reviews.
                </p>
            </field>
        </record>

        <menuitem name="All Reviews" id="performance_all_reviews_menu"
                  parent="employee_performance.menu_performance_config"
                  action="performance_all_reviews_act_window"
                  sequence="14"/>
    </data>
</odoo>
