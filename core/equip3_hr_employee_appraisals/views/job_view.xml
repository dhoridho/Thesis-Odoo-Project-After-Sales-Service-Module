<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data noupdate="0">

    <record id="job_form_inherit" model="ir.ui.view">
        <field name="name">	hr.job.form.inherit</field>
        <field name="model">hr.job</field>
        <field name="inherit_id" ref="employee_performance.job_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='template_id']" position="attributes">
                <attribute name="string" >Performances</attribute>
                <attribute name="attrs">{'invisible': [('performance_type','!=','kpi')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='comp_template_id']" position="attributes">
                <attribute name="string" >Competencies</attribute>
            </xpath>
            <xpath expr="//field[@name='template_id']" position="before">
                <field name="performance_type"/>
            </xpath>
            <xpath expr="//field[@name='comp_template_id']" position="after">
                <field name="performance_all_review_id"/>
                <field name="task_challenge_id"/>
            </xpath>
            <xpath expr="//sheet/group[1]" position="after">
                <notebook>
                    <page string="Competencies Detail">
                        <field name="competencies_detail_ids">
                            <tree editable="bottom" create="0" delete="0">
                                <field name="name" readonly="1" force_save="1"/>
                                <field name="is_competency_gap"/>
                                <field name="minimum_gap" attrs="{'required': [('is_competency_gap','=',True)]}"/>
                                <field name="key_competencies_id" invisible="1"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>

</data>
</odoo>
