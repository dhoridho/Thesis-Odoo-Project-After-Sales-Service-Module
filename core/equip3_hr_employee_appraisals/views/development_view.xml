<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- Training Plan -->
    <record id="employee_training_plan_view_search" model="ir.ui.view">
        <field name="name">employee.training.plan.line.view.search</field>
        <field name="model">employee.training.plan.line</field>
        <field name="arch" type="xml">
            <search string="Employee">
                <!-- Add your fields here -->
                <field name="employee_id"/>

                <group expand="0" string="Group By...">
                    <filter name="group_employee_id" icon="terp-check" domain="[]" context="{'group_by':'employee_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="employee_training_plan_view_tree" model="ir.ui.view">
        <field name="name">employee.training.plan.line.view.tree</field>
        <field name="model">employee.training.plan.line</field>
        <field name="arch" type="xml">
            <tree create="0">
                <field name="employee_id"/>
                <field name="competencies_areas"/>
                <field name="competencies_score"/>
                <field name="course_ids" widget="many2many_tags"/>
                <field name="training_score"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <!-- <record id="action_all_training_plan" model="ir.actions.act_window">
        <field name="name">Training Plan</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">employee.training.plan.line</field>
        <field name="view_mode">tree</field>
        <field name="domain">[]</field>
        <field name="context">{'search_default_group_employee_id': 1}</field>
    </record> -->


    <record id="action_all_training_plan" model="ir.actions.server">
        <field name="name">Training Plan</field>
        <field name="type">ir.actions.server</field>
        <field name="state">code</field>
        <field name="model_id" ref="model_employee_training_plan_line"/>
        <field name="code">action = model.custom_menu()</field>
    </record>
    <!-- End Training Plan -->

    <!-- Development Plan -->
    <record id="employee_development_plan_view_search" model="ir.ui.view">
        <field name="name">employee.development.plan.line.view.search</field>
        <field name="model">employee.development.plan.line</field>
        <field name="arch" type="xml">
            <search string="Employee">
                <!-- Add your fields here -->
                <field name="employee_id"/>

                <group expand="0" string="Group By...">
                    <filter name="group_employee_id" icon="terp-check" domain="[]" context="{'group_by':'employee_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="employee_development_plan_view_tree" model="ir.ui.view">
        <field name="name">employee.development.plan.line.view.tree</field>
        <field name="model">employee.development.plan.line</field>
        <field name="arch" type="xml">
            <tree create="0">
                <field name="employee_id"/>
                <field name="development_method"/>
                <field name="description"/>
                <field name="due_date"/>
                <field name="pic"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <!-- <record id="action_all_development_plan" model="ir.actions.act_window">
        <field name="name">Development Plan</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">employee.development.plan.line</field>
        <field name="view_mode">tree</field>
        <field name="domain">[]</field>
        <field name="context">{'search_default_group_employee_id': 1}</field> -->

        <record id="action_all_development_plan" model="ir.actions.server">
            <field name="name">Development Plan</field>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="model_id" ref="model_employee_development_plan_line"/>
            <field name="code">action = model.custom_menu()</field>
    </record>
    <!-- End Development Plan -->

    <!-- Development Menu -->
    <menuitem name="Development" id="menu_development"
                parent="employee_performance.menu_template" sequence="4" />
    
    <record model='ir.ui.menu' id='menu_development'>
            <field name="groups_id" eval="[(6, 0, [ref('equip3_hr_employee_appraisals.group_hr_appraisal_self_service')])]"/>
    </record>

    <menuitem name="All Training Plan" id="all_training_plan_sub_menu"
                action="action_all_training_plan"
                parent="menu_development" sequence="1" />

    <record model='ir.ui.menu' id='all_training_plan_sub_menu'>
        <field name="groups_id" eval="[(6, 0, [ref('equip3_hr_employee_appraisals.group_hr_appraisal_self_service')])]"/>
    </record>
    
    <menuitem name="All Development Plan" id="all_development_plan_sub_menu"
                action="action_all_development_plan"
                parent="menu_development" sequence="1" />
    <record model='ir.ui.menu' id='all_development_plan_sub_menu'>
        <field name="groups_id" eval="[(6, 0, [ref('equip3_hr_employee_appraisals.group_hr_appraisal_self_service')])]"/>
    </record>

</odoo>