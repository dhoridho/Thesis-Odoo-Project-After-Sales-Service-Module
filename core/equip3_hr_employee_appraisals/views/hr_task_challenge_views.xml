<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_task_challenge_form" model="ir.ui.view">
            <field name="name">hr.task.challenge.form</field>
            <field name="model">hr.task.challenge</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="task_challenge" string="Tasks/Challenges">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="task_challenge_id" options="{'no_open': True, 'no_create': True, 'no_quick_create': True, 'no_create_edit': True}"/>
                                        <field name="weightage"/>
                                        <field name="target_score"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_task_challenge_search" model="ir.ui.view">
            <field name="name">hr.task.challenge.search</field>
            <field name="model">hr.task.challenge</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="hr_task_challenge_tree" model="ir.ui.view">
            <field name="name">hr.task.challenge.tree</field>
            <field name="model">hr.task.challenge</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="hr_task_challenge_act_window" model="ir.actions.act_window">
            <field name="name">Tasks/Challenges</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.task.challenge</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no data. Click here to add new Tasks/Challenges.
                </p>
            </field>
        </record>

        <menuitem name="Tasks/Challenges" id="hr_task_challenge_config_menu"
                  parent="employee_performance.menu_performance_config"
                  action="hr_task_challenge_act_window"
                  sequence="15"/>
    </data>
</odoo>
