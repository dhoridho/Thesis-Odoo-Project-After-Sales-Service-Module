<odoo>
    <data>


        <record model="ir.ui.view" id="employee_performances_line_form">
            <field name="name">employee.performances.line.form</field>
            <field name="model">employee.performances.line</field>
            <field name="arch" type="xml">
                <form>              
                    <sheet>
                        <group>

                                <field name="cascade_line_ids" >
                                    <tree>
                                        <field name="employee_id" />
                                        <field name="performance_id"  string="KPI Line"/>
                                        <field name="weightage_score" />
                                        <field name="assign_weightage" string="Assign Weightage (%)"/>

                                    </tree>

                                </field>
                            
                        </group>
                      
                    </sheet>
                </form>
            </field>
        </record>
    </data>


</odoo>