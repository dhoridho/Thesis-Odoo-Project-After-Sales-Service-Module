        <record id="action_career_suggestion" model="ir.actions.server">
            <field name="name">Career Suggestion</field>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="model_id" ref="equip3_hr_employee_appraisals.model_employee_career_suggestion"/>
            <field name="code">action = model.custom_menu()</field>
        </record>

        <menuitem name="Career Suggestion" id="menu_career_suggestion" action="action_career_suggestion"
                  parent="menu_career_plan" sequence="2" />
        <record model='ir.ui.menu' id='menu_career_suggestion'>
            <field name="groups_id" eval="[(6, 0, [ref('equip3_hr_employee_appraisals.group_hr_appraisal_manager')])]"/>
        </record>
        
    </data>
</odoo>