<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="successor_parameter_view_form" model="ir.ui.view">
            <field name="name">successor.parameter.view.form</field>
            <field name="model">successor.parameter</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" /></h1>
                            
                            <field name="computation_type" />
                            <field name="target_object" />
                        </group>
                        <group name="computation" string="Computation">
                            <field name="python_code" 
                                   attrs="{'invisible': [('computation_type', '=', 'matrix')]}" />
                            <field name="matrix_ids" 
                                   attrs="{'invisible': [('computation_type', '=', 'python_code')]}">
                                <tree editable="1" create="0">
                                    <field name="name" readonly="1" />
                                    <field name="value" />
                                    <field name="model_name" invisible="1" />
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="successor_parameter_view" model="ir.ui.view">
            <field name="name">successor.parameter.tree</field>
            <field name="model">successor.parameter</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" readonly="1"/>
                </tree>
            </field>
        </record>

        <record id="successor_parameter_action" model="ir.actions.act_window">
            <field name="name">Successor Parameter</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">successor.parameter</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                There is no data click here to add new Successor Parameter.
                </p>
            </field>
        </record>

        <menuitem
            name="Successor Parameter"
            id="successor_parameter_menu"
            parent="employee_performance.menu_performance_config"
            action="successor_parameter_action"
            sequence="20"/>

    </data>
</odoo>