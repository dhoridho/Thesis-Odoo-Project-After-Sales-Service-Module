<odoo>
<data>


    <record id="competencies_level_form" model="ir.ui.view">
        <field name="name">competencies.level.form</field>
        <field name="model">competencies.level</field>
        <field name="arch" type="xml">
            <form string="Competencies">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="description" />
                        </group>
                        <group>
                            <field name="training_required_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="competencies_line_ids" string="Competencies Level">
                            <field name="line_ids" >
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name" />
                                    <field name="description" />
                                    <field name="competency_score" />
                                </tree>
                            </field>

                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="competencies_level_search" model="ir.ui.view">
        <field name="name">competencies.level.search</field>
        <field name="model">competencies.level</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="description"/>
            </search>
        </field>
    </record>

    <record id="competencies_level_tree_view" model="ir.ui.view">
        <field name="name">competencies.level.tree</field>
        <field name="model">competencies.level</field>
        <field name="arch" type="xml">
            <tree string="Competencies">
                <field name="name"/>
                <field name="description"/>
                <field name="training_required_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>



    <record id="competencies_level_line_form" model="ir.ui.view">
        <field name="name">competencies.level.line.form</field>
        <field name="model">competencies.level.line</field>
        <field name="arch" type="xml">
            <form string="Competencies Level" edit="1" create="0" delete="0">
                <sheet>
                    <group>
                        <group>
                            <field name="competencies_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}" required="1"/>
                            <field name="name" required="1"/>
                            <field name="description" required="1"/>
                            <field name="competency_score" required="1"/>
                        </group>
                       
                    </group>
                  
                </sheet>
            </form>
        </field>
    </record>

    <record id="competencies_level_line_tree_view" model="ir.ui.view">
        <field name="name">competencies.level.line.tree</field>
        <field name="model">competencies.level.line</field>
        <field name="arch" type="xml">
            <tree string="Competencies Level"  edit="1" create="0" delete="0">
                <field name="competencies_id"/>
                <field name="name"/>
                <field name="description"/>
                <field name="competency_score"/>
            </tree>
        </field>
    </record>

    <record id="competencies_level_line_act_window" model="ir.actions.act_window">
        <field name="name">Competencies Level</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">competencies.level.line</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Competencies Line.
            </p>
        </field>
    </record>

    <record id="competencies_level_act_window" model="ir.actions.act_window">
        <field name="name">Competencies Area</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">competencies.level</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Competencies.
            </p>
        </field>
    </record>

    <menuitem name="Competency Areas" id="hr_competencies"
              parent="employee_performance.menu_performance_config"
              action="competencies_level_act_window"
              sequence="11"/>

    <record model='ir.ui.menu' id='hr_competencies'>
        <field name="groups_id" eval="[(6, 0, [ref('equip3_hr_employee_appraisals.group_hr_appraisal_manager')])]"/>
    </record>
    

    <menuitem name="Competency Levels" id="hr_competencies_level_line"
              parent="employee_performance.menu_performance_config"
              action="competencies_level_line_act_window"
              sequence="12"/>

    <record model='ir.ui.menu' id='hr_competencies_level_line'>
    <field name="groups_id" eval="[(6, 0, [ref('equip3_hr_employee_appraisals.group_hr_appraisal_manager')])]"/>
</record>

</data>



</odoo>