<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_milestone_temp_tree_view" model="ir.ui.view">
            <field name="name">hr.milestone.temp.tree</field>
            <field name="model">hr.milestone.temp</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="create_uid"  string = "Created by"/>
                </tree>
            </field>
        </record>

        <record id="hr_milestone_temp_form_view" model="ir.ui.view">
            <field name="name">hr.milestone.temp.form</field>
            <field name="model">hr.milestone.temp</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="predecessor_successor_type" required="1"/>
                                <field name="create_uid"  string = "Created by"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="milestone_area" string="Milestone Area">
                                <field name="milestone_line_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="name"/>
                                        <field name="weightage"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_milestone_temp_search" model="ir.ui.view">
            <field name="name">hr.milestone.temp.search</field>
            <field name="model">hr.milestone.temp</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="hr_milestone_temp_act_window" model="ir.actions.act_window">
            <field name="name">Milestone Template</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.milestone.temp</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no data. Click here to add new Milestone Template.
                </p>
            </field>
        </record>

        <menuitem name="Milestone Template" id="hr_milestone_temp_menu"
                  parent="employee_performance.menu_performance_config"
                  action="hr_milestone_temp_act_window"
                  sequence="18"/>
    </data>
</odoo>