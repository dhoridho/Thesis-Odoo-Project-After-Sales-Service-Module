<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="equip3_hr_employee_appraisals_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.equip3_hr_employee_appraisals</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="70"/>
            <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Appraisals Approval Setting"
                         string="Appraisals Approval Setting"
                         data-key="equip3_hr_employee_appraisals">
                         <p>
                            <h3 style="text-indent: 15px;">Appraisals</h3>
                        </p>

                        <h2>Notification</h2>
                        <div class="row mt16 o_settings_container" name="appraisals_wa_notification_setting_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="equip3_hr_employee_appraisals.wa_notification_setting">
                                <div class="o_setting_left_pane">
                                    <field name="send_by_wa"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label string="Send By Whatsapp" for="send_by_wa"/>
                                </div>
                            </div>
                        </div>
                        <div class="row mt16 o_settings_container" name="appraisals_email_notification_setting_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="equip3_hr_employee_appraisals.email_notification_setting">
                                <div class="o_setting_left_pane">
                                    <field name="send_by_email"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label string="Send By Email" for="send_by_email"/>
                                </div>
                            </div>
                        </div>

                        <h2>Appraisals Approval Setting</h2>
                        <div class="row mt16 o_settings_container" name="appraisals_approval_setting_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="appraisals_approval_setting"
                                 title="Appraisals Approval Setting">
                                <div class="content-group">
                                    <div class="mt16">
                                        <label for="appraisal_type_approval" string="Approval Method"/>
                                        <field style="margin-left:10px;" name="appraisal_type_approval"
                                               class="oe_inline"
                                               required="1"/>
                                    </div>
                                    <div class="mt16"
                                         attrs="{'invisible':[('appraisal_type_approval','!=','employee_hierarchy')]}">
                                        <label for="appraisal_level" string="Approval Levels"/>
                                        <field style="margin-left:16px;" name="appraisal_level" class="oe_inline"
                                               required="1"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="equip3_hr_employee_appraisals_config_settings_action" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'equip3_hr_employee_appraisals', 'bin_size': False}</field>
        </record>

        <menuitem id="menu_hr_employee_appraisals_global_settings" parent="employee_performance.menu_performance_config"
                  action="equip3_hr_employee_appraisals_config_settings_action" sequence="1" groups="equip3_hr_employee_appraisals.group_hr_appraisal_administrator"/>
    </data>
</odoo>
