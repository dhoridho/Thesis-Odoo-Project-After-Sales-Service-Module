<odoo>
<data>

    <record id="nine_box_grid_form_view" model="ir.ui.view">
        <field name="name">nine.box.grid.form</field>
        <field name="model">nine.box.grid</field>
        <field name="arch" type="xml">
            <form string="Nine Box Grid">
                <sheet>
                    <!-- <div class="oe_title">
                        <h1 class="o_row">
                            <field name="name" readonly="1"/>
                        </h1>
                    </div> -->
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="description" required="1"/>
                                <field name="suggestion_action" required="1"/>
                                <field name="create_uid"/>
                                <field name="create_date"/>

                            </group>
                        </group>

                        
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>

        </field>
    </record>

    <record id="nine_box_grid_filter" model="ir.ui.view">
        <field name="name">nine.box.grid.search</field>
        <field name="model">nine.box.grid</field>
        <field name="arch" type="xml">
            <search string="Nine Box grid">
               <field name="name" />
               <field name="description" />
               <field name="suggestion_action" />
           </search>
        </field>
    </record>

 <record id="nine_box_grid_tree_view" model="ir.ui.view">
        <field name="name">nine.box.grid.tree</field>
        <field name="model">nine.box.grid</field>
        <field name="arch" type="xml">
            <tree string="Nine Box grid">
                <field name="name"/>
                <field name="description"/>
                <field name="suggestion_action"/>
            </tree>
        </field>
    </record>





    

