<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	 <record id="talent_management_flow_view_form" model="ir.ui.view">
        <field name="name">talent.management.flow.view.form</field>
        <field name="model">talent.management.flow</field>
        <field name="arch" type="xml">
            <form string="Talent Management Flow" class="talent_management_flow_menu d-flex flex-column"> 
                <div class="content-header">
                    <div class="d-flex p-3 w-100">
                        <span>Talent Management Flow</span>
                    </div>
                </div>
                <div class="content-body">
                    <div class="container h-100">
                        <div class="row h-100">

                            <div class="col-md-3 d-flex flex-column">
                                <div class="row">
                                    <div class="col-md-4 col-sm-4 col-4"> 
                                        <button name="equip3_hr_employee_appraisals.nine_box_matrix_view_action" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_employee_appraisals/static/src/img/hrm-flow-temp.svg"/>
                                            </div>
                                            <div class="button-text">Nine Box Matrix</div>
                                        </button>
                                    </div>
                                    <div class="col-md-4 col-sm-4 col-4"> 
                                        <button name="equip3_hr_employee_appraisals.competencies_level_act_window" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_employee_appraisals/static/src/img/hrm-flow-temp.svg"/>
                                            </div>
                                            <div class="button-text">Competency Areas</div>
                                        </button>
                                    </div>
                                    <div class="col-md-4 col-sm-4 col-4"> 
                                        <button name="employee_performance.action_performance_template" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_employee_appraisals/static/src/img/hrm-flow-temp.svg"/>
                                            </div>
                                            <div class="button-text">Performances</div>
                                        </button>
                                    </div>

                                    <div class="col-md-4 col-sm-4 col-4"> 
                                        <button name="equip3_hr_employee_appraisals.action_performance_date_range" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_employee_appraisals/static/src/img/hrm-flow-temp.svg"/>
                                            </div>
                                            <div class="button-text">Evaluation Period</div>
                                        </button>
                                    </div>
                                    <div class="col-md-4 col-sm-4 col-4"> 
                                        <button name="employee_performance.action_competencies_template" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_employee_appraisals/static/src/img/hrm-flow-temp.svg"/>
                                            </div>
                                            <div class="button-text">Competencies</div>
                                        </button>
                                    </div>
                                    <div class="col-md-4 col-sm-4 col-4"> 
                                        <button name="employee_performance.job_view_action" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_employee_appraisals/static/src/img/hrm-flow-temp.svg"/>
                                            </div>
                                            <div class="button-text">Job Position</div>
                                        </button>
                                    </div>

                                    <div class="col-md-4 col-sm-4 col-4"> 
                                        <button name="equip3_hr_employee_appraisals.hr_appraisals_approval_matrix_act_window" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_employee_appraisals/static/src/img/hrm-flow-temp.svg"/>
                                            </div>
                                            <div class="button-text">Performance Approval Matrix</div>
                                        </button>
                                    </div>
                                    <div class="col-md-4 col-sm-4 col-4"> 
                                        <button name="equip3_hr_employee_appraisals.competencies_level_line_act_window" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_employee_appraisals/static/src/img/hrm-flow-temp.svg"/>
                                            </div>
                                            <div class="button-text">Competency Levels</div>
                                        </button>
                                    </div>
                                    <div class="col-md-4 col-sm-4 col-4"> 
                                        <button name="equip3_hr_employee_appraisals.performance_all_reviews_act_window" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_employee_appraisals/static/src/img/hrm-flow-temp.svg"/>
                                            </div>
                                            <div class="button-text">Performance Reviews</div>
                                        </button>
                                    </div>

                                    <div class="col-md-4 col-sm-4 col-4"> 
                                        <button name="equip3_hr_employee_appraisals.equip3_hr_employee_appraisals_config_settings_action" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_employee_appraisals/static/src/img/hrm-flow-temp.svg"/>
                                            </div>
                                            <div class="button-text">Settings</div>
                                        </button>
                                    </div>
                                    <div class="col-md-4 col-sm-4 col-4"> 
                                        <button name="equip3_hr_employee_appraisals.action_survey_form_survey_extend_appraisal" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_employee_appraisals/static/src/img/hrm-flow-temp.svg"/>
                                            </div>
                                            <div class="button-text">Feedback Template</div>
                                        </button>
                                    </div>
                                    <div class="col-md-4 col-sm-4 col-4"> 
                                        <button name="equip3_hr_employee_appraisals.kpi_definition_action" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_employee_appraisals/static/src/img/hrm-flow-temp.svg"/>
                                            </div>
                                            <div class="button-text">KPIs</div>
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-5 d-flex flex-column">
                                <div class="row">
                                    <div class="col-md-3 col-sm-3 col-3"> 
                                        <button name="action_none" 
                                            type="object"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_employee_appraisals/static/src/img/hrm-flow-settings.svg"/>
                                            </div>
                                            <div class="button-text">Configuration</div>
                                            <div class="menu-arrow">
                                                <span class="arrow is-triangle arrow-bar is-right"></span>
                                            </div>
                                        </button>
                                    </div>
                                    <div class="col-md-3 col-sm-3 col-3"> 
                                        <button name="equip3_hr_employee_appraisals.action_performance_planning" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_employee_appraisals/static/src/img/hrm-flow-temp.svg"/>
                                            </div>
                                            <div class="button-text">Performance Planning</div>
                                            <div class="menu-arrow">
                                                <span class="arrow is-triangle arrow-bar is-right"></span>
                                            </div>
                                        </button>
                                    </div>
                                    <div class="col-md-3 col-sm-3 col-3"> 
                                        <button name="employee_performance.action_employee_performance" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_employee_appraisals/static/src/img/hrm-flow-employees.svg"/>
                                            </div>
                                            <div class="button-text">Performance Evaluations</div>
                                            <div class="menu-arrow">
                                                <span class="arrow is-triangle arrow-bar is-right"></span>
                                            </div>
                                        </button>
                                    </div>
                                    <div class="col-md-3 col-sm-3 col-3"> 
                                        <button name="employee_performance.action_employee_performance" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_employee_appraisals/static/src/img/hrm-flow-temp.svg"/>
                                            </div>
                                            <div class="button-text">Development Plan</div>
                                            <div class="menu-arrow">
                                                <span class="arrow is-triangle arrow-bar is-right"></span>
                                            </div>
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-2 d-flex flex-column">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="equip3_hr_employee_appraisals.action_employee_performance_pivot1" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_employee_appraisals/static/src/img/hrm-flow-analysis.svg"/>
                                            </div>
                                            <div class="button-text">Nine Box Analysis</div>
                                        </button>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <div class="menu-arrow-up">
                                            <span class="arrow is-triangle arrow-bar is-up"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="action_none" 
                                            type="object"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_employee_appraisals/static/src/img/hrm-flow-temp.svg"/>
                                            </div>
                                            <div class="button-text">Reporting</div>
                                            <div class="menu-arrow-up-right">
                                                <span class="arrow is-triangle arrow-bar is-up-right"></span>
                                            </div>
                                            <div class="menu-arrow-down-right">
                                                <span class="arrow is-triangle arrow-bar is-down-right"></span>
                                            </div>
                                        </button>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <div class="menu-arrow-down">
                                            <span class="arrow is-triangle arrow-bar is-down"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="equip3_hr_employee_appraisals.report_appraisal_analysis_pivot_action" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_employee_appraisals/static/src/img/hrm-flow-analysis.svg"/>
                                            </div>
                                            <div class="button-text">Evaluation Analysis</div>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2 d-flex flex-column">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="employee_performance.report_report_key_performance_pivot_action" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_employee_appraisals/static/src/img/hrm-flow-analysis.svg"/>
                                            </div>
                                            <div class="button-text">Performance Analysis</div>
                                        </button>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="employee_performance.report_report_competencies_pivot_action" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_employee_appraisals/static/src/img/hrm-flow-analysis.svg"/>
                                            </div>
                                            <div class="button-text">Competency Analysis</div>
                                        </button>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </form>
        </field>
    </record>

    <record id="talent_management_flow_act_window" model="ir.actions.act_window">
        <field name="name">Talent Management Flow</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">talent.management.flow</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <record id="talent_management_flow_action_client" model="ir.actions.client">
        <field name="name">Talent Management Flow</field>
        <field name="tag">talent_management_flow_tag</field>
    </record>

    <menuitem 
        id="talent_management_flow_menu"
        name="Talent Management Flow"
        action="talent_management_flow_action_client"
        parent="equip3_hr_employee_appraisals.menu_hr_appraisal_root"
        sequence="-1"/>
    
    <record id="equip3_hr_employee_appraisals.talent_management_flow_menu" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-main-flow</field>
    </record>
</odoo>