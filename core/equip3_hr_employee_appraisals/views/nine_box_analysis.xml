<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data >

        <record id="nine_box_analysis_tree" model="ir.ui.view">
            <field name="name">nine.box.analysis.tree</field>
            <field name="model">nine.box.analysis</field>
            <field name="arch" type="xml">
                <tree string="Nine-Box Analysis" editable="bottom" create="0" edit="0" delete="0">
                    <field name="evaluation_id" readonly="1" force_save="1"/>
                    <field name="employee_id" readonly="1" force_save="1"/>
                    <field name="job_id" readonly="1" force_save="1"/>
                    <field name="matrix_id" readonly="1" force_save="1"/>
                </tree>
            </field>
       </record>
        <!-- <record id="nine_box_analysis_pivot" model="ir.ui.view">
            <field name="name">nine.box.analysis.pivot</field>
            <field name="model">nine.box.analysis</field>
            <field name="arch" type="xml">
                <pivot string="Nine-Box Analysis" sample="1">
                    <field name="job_id" type="row"/>
                    <field name="matrix_id" type="col"/>
                </pivot>
            </field>
       </record> -->


        <record id="nine_box_analysis_form" model="ir.ui.view">
            <field name="name">nine.box.analysis.form</field>
            <field name="model">nine.box.analysis</field>
            <field name="arch" type="xml">
                <form string="Nine-Box Analysis" create="0" edit="0" delete="0">


                 <sheet>
                    <group>
                        <group>
                            <field name="evaluation_id" readonly="1" force_save="1"/>
                            <field name="employee_id" readonly="1" force_save="1"/>
                            <field name="job_id" readonly="1" force_save="1"/>
                            <field name="matrix_id" readonly="1" force_save="1"/>

                        </group>
                    </group>

                    
            </sheet>
                   
                </form>
            </field>
       </record>


       <record id="nine_box_analysis_view_action" model="ir.actions.act_window">
        <field name="name">Nine Box Matrix</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">nine.box.analysis</field>
        <field name="view_mode">pivot</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
              Create New Nine Box Analysis
            </p>
        </field>
    </record>

   
    <menuitem id="nine_box_analysis_menu_id"
              name="Nine Box Analysis"
              action="action_employee_performance_pivot1"
              parent="employee_performance.menu_reporting_config"
           
    />


    <record model='ir.ui.menu' id='nine_box_analysis_menu_id'>
        <field name="groups_id" eval="[(6, 0, [ref('equip3_hr_employee_appraisals.group_hr_appraisal_manager')])]"/>
    </record>


       
    
        
    
    </data>
    



</odoo>
