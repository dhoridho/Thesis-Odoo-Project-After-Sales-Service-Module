<odoo>
<data>

    

    <record id="nine_box_matrix_filter" model="ir.ui.view">
        <field name="name">nine.box.matrix.search</field>
        <field name="model">nine.box.matrix</field>
        <field name="arch" type="xml">
            <search string="Nine Box Matrix">
               <field name="category" />
           </search>
        </field>
    </record>

 <record id="nine_box_matrix_tree_view" model="ir.ui.view">
        <field name="name">nine.box.matrix.tree</field>
        <field name="model">nine.box.matrix</field>
        <field name="arch" type="xml">
            <tree string="Nine Box Matrix"  create="0" delete="0" edit="1" >
                <field name="sequence" widget="handle"/>
                <field name="category"/>
                <field name="min_performance_score"/>
                <field name="max_performance_score"/>
                <field name="min_competency_score"/>
                <field name="max_competency_score"/>
                <field name="performance_level"/>
                <field name="competency_level"/>
            </tree>
        </field>
    </record>


    <record id="nine_box_matrix_form_view" model="ir.ui.view">
        <field name="name">nine.box.grid.matrix.form</field>
        <field name="model">nine.box.matrix</field>
        <field name="arch" type="xml">
            <form string="Nine Box Grid"   create="0" delete="0" edit="1">
                <sheet>
                    <!-- <div class="oe_title">
                        <h1 class="o_row">
                            <field name="name" readonly="1"/>
                        </h1>
                    </div> -->
                        <group>
                            <group>
                                <field name="category" required="1"/>
                                <field name="description" required="1"/>
                                <field name="suggestion_action" required="1"/>
                                <field name="min_performance_score" required="1"/>
                                <field name="max_performance_score" required="1"/>
                                <field name="min_competency_score" required="1"/>
                                <field name="max_competency_score" required="1"/>
                                <field name="performance_level" required="1"/>
                                <field name="competency_level" required="1"/>
                                <field name="number_analysis" required="1"/>
                                <field name="color" widget="color" required="1"/>
                                <field name="create_uid" required="1"/>
                                <field name="create_date" required="1"/>

                            </group>
                        </group>

                        
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>

        </field>
    </record>





    

 <record id="nine_box_matrix_view_action" model="ir.actions.act_window">
        <field name="name">Nine Box Matrix</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">nine.box.matrix</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
              Create New Nine Box Matrix
            </p>
        </field>
    </record>

   
    <menuitem id="nine_box_matrix_menu_id"
              name="Nine Box Matrix"
              action="nine_box_matrix_view_action"
              parent="employee_performance.menu_performance_config"
              groups="equip3_hr_employee_appraisals.group_hr_appraisal_administrator"
    />

</data>


</odoo>