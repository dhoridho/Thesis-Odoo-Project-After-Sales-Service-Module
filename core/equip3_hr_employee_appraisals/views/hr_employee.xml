<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_employee_form_inherit" model="ir.ui.view">
            <field name="name">hr.employee.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Appraisal" name="appraisal">
                        <field name="peer_feedback_ids" nolabel="1">
                            <tree string="Peer Feedback" editable="bottom">
                                <field name="job_id" options="{'no_create': True, 'no_open': True}"/>
                                <field name="employee_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>