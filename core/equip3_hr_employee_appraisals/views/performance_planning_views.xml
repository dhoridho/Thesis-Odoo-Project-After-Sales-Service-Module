<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="performance_planning_form">
            <field name="name">performance.planning.form</field>
            <field name="model">performance.planning</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_confirm" states="draft" type="object" string="Submit" />
                        <button name="action_generate"  type="object" string="Approve" attrs="{'invisible':[('is_hide_approve','=',True)]}"/>
                        <button name="action_reject"  type="object" string="Reject" attrs="{'invisible':[('is_hide_reject','=',True)]}"/>
                        <button name="action_set_task"  type="object" string="Send Tasks/Challenges" attrs="{'invisible':['|','&amp;',('is_period_task_challenge','=',False),('state','!=','approved'),('is_hide_task_challenge','=',True)]}"/>
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="user_approval_ids" widget="many2many_tags" invisible="1"/>
                                <field name="is_hide_reject" invisible="1"/>
                                <field name="is_hide_approve" invisible="1"/>
                                <field name="employee_id" required="1" readonly="1" string="Planning Requester" force_save="1"/>
                                <field name="period_id" required="1" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="date_start"/>
                                <field name="date_end"/>
                                <field name="deadline"/>
                                <field name="company_id" readonly="1"/>
                                <field name="domain_employee_ids" invisible="1" widget="many2many_tags"/>
                                <field name="is_period_task_challenge" readonly="1" invisible="1"/>
                                <field name="is_hide_task_challenge" readonly="1" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Employees" name="employees">
                                <field name="employee_ids" nolabel="1" attrs="{'readonly': [('state','!=','draft')]}" options="{'no_create': True}" domain="[('id','in',domain_employee_ids)]">
                                    <tree >
                                        <field name="sequence_code"/>
                                        <field name="name" />
                                        <field name="company_id" invisible="1" />
                                        <field name="department_id" />
                                        <field name="job_id" />
                                        <field name="parent_id"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Performances" name="performances">
                                <field name="performance_ids" nolabel="1">
                                    <tree editable="bottom" create="0">
                                        <field name="employee_id"/>
                                        <field name="template_id"/>
                                        <field name="date_range_id"/>
                                        <field name="date_start"/>
                                        <field name="date_end"/>
                                        <field name="deadline"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="performance_detail_matrix" string="Approval Matrix Lines">
                                <field name="approval_matrix_ids"  readonly="1" force_save="1">
                                    <tree>
                                        <field name="sequence" />
                                        <field name="approver_id" widget="many2many_tags" />
                                        <field name="minimum_approver"/>
                                        <field name="approval_status" />
                                        <field name="timestamp" />
                                        <field name="feedback" />
                                        <field name="approver_confirm" widget="many2many_tags" invisible="1" />
                                    </tree>
                                    </field>

                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="performance_planning_tree" model="ir.ui.view">
            <field name="name">performance.planning.tree</field>
            <field name="model">performance.planning</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="period_id"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="deadline"/>
                    <field name="state" decoration-primary="state == 'draft'"
                            decoration-warning="state == 'submitted'"
                            decoration-success="state == 'approved'" 
                            decoration-danger="state == 'rejected'" 
                            widget='badge'/>
                </tree>
            </field>
        </record>


        <record id="action_performance_planning" model="ir.actions.server">
            <field name="name">Performance Planning</field>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="model_id" ref="equip3_hr_employee_appraisals.model_performance_planning"/>
            <field name="code">action = model.custom_menu()</field>
        </record>

