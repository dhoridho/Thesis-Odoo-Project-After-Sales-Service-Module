            <field name="name">Performance Planning</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">performance.planning</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('employee_id.user_id','=',uid)]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click here to add a new Performance Planning
                </p>
            </field>
        </record> -->

        <menuitem name="Performance Planning" id="menu_performance_planning" action="action_performance_planning"
        parent="employee_performance.menu_template" sequence="0"/>

        <record model='ir.ui.menu' id='equip3_hr_employee_appraisals.menu_performance_planning'>
            <field name="groups_id" eval="[(6, 0, [ref('equip3_hr_employee_appraisals.group_hr_appraisal_manager')])]"/>
        </record>

    </data>
</odoo>