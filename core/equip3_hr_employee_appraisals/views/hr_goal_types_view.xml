<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_goal_types_tree_view" model="ir.ui.view">
            <field name="name">hr.goal.types.tree</field>
            <field name="model">hr.goal.types</field>
            <field name="arch" type="xml">
                <tree create="0" delete="0">
                    <field name="name"/>
                    <field name="group_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <record id="hr_goal_types_form_view" model="ir.ui.view">
            <field name="name">hr.goal.types.form</field>
            <field name="model">hr.goal.types</field>
            <field name="arch" type="xml">
                <form create="0" delete="0" copy="0">
                    <sheet>
                        <group>
                            <group>
                               <field name="name" required="1" readonly="1"/>
                                <field name="group_ids" widget="many2many_tags" required="1" options="{'no_create': True}"/>
                                <field name="create_uid"  string = "Created by" options="{'no_open': True}"/>
                                <field name="create_date" string = "Created on"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_goal_types_search" model="ir.ui.view">
            <field name="name">hr.goal.types.search</field>
            <field name="model">hr.goal.types</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="hr_goal_types_act_window" model="ir.actions.act_window">
            <field name="name">Goal Types</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.goal.types</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no data. Click here to add new Goal Types.
                </p>
            </field>
        </record>

        <menuitem name="Goal Types" id="hr_goal_types_menu"
                  parent="employee_performance.menu_performance_config"
                  action="hr_goal_types_act_window"
                  sequence="17"/>
    </data>
</odoo>