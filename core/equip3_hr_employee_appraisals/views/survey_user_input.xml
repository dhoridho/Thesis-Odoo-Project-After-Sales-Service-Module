<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="appraisals_survey_user_input_form" model="ir.ui.view">
            <field name="name">appraisals.survey.user_input.form</field>
            <field name="model">survey.user_input</field>
            <field name="inherit_id" ref="survey.survey_user_input_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='scoring_success']" position="after">
                    <field name="employee_performance_id" readonly="1" invisible="1"/>
                    <field name="reviewer_role" readonly="1" invisible="1"/>
                    <field name="company_name" readonly="1" attrs="{'invisible':['|',('survey_type','!=','PEER_REVIEW'),('reviewer_role','!=','external')]}"/>
                    <field name="reviewer_name" readonly="1" attrs="{'invisible':[('survey_type','!=','PEER_REVIEW')]}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>