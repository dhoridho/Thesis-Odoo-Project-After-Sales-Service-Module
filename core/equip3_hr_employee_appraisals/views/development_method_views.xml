<?xml version='1.0' encoding='utf-8'?>
<odoo>


    <record id="development_method_master_tree" model="ir.ui.view">
        <field name="name">development.method.master.tree</field>
        <field name="model">development.method.master</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="develpment_method_master_act_window" model="ir.actions.act_window">
        <field name="name">Development Method</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">development.method.master</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no data. Click here to add new Performance Peer Reviews.
            </p>
        </field>
    </record>

    <menuitem name="Development Method" id="development_method_menu" parent="employee_performance.menu_performance_config" action="develpment_method_master_act_window" sequence="15"/>
</odoo>