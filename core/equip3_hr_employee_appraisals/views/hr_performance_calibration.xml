<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="performance_calibration_tree_view" model="ir.ui.view">
            <field name="name">hr.performance.calibration.tree</field>
            <field name="model">hr.performance.calibration</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sequence_number"/>
                    <field name="name"/>
                    <field name="evaluation_period_id"/>
                    <field name="select_based_on"/>
                    <field name="calibrator_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="performance_calibration_form_view" model="ir.ui.view">
            <field name="name">hr.performance.calibration.form</field>
            <field name="model">hr.performance.calibration</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_process" states="draft" type="object" string="Process"/>
                        <button name="action_submit" states="on_process" type="object" string="Submit"/>
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="sequence_number" readonly="1" force_save="1"/>
                                <field name="name" attrs="{'readonly':[('state','in',['on_process','calibrated'])]}" required="1"/>
                                <field name="evaluation_period_id" options="{'no_create': True, 'no_open': True}" attrs="{'readonly':[('state','in',['on_process','calibrated'])]}" required="1"/>
                                <field name="select_based_on" attrs="{'readonly':[('state','in',['on_process','calibrated'])]}" required="1"/>
                                <field name="nine_box_grid_ids" widget="many2many_tags" options="{'no_create': True}" attrs="{'invisible':[('select_based_on','!=','nine_box_grid')],'required':[('select_based_on','=','nine_box_grid')],'readonly':[('state','in',['on_process','calibrated'])]}"/>
                                <field name="department_ids" widget="many2many_tags" options="{'no_create': True}" attrs="{'invisible':[('select_based_on','!=','department')],'required':[('select_based_on','=','department')],'readonly':[('state','in',['on_process','calibrated'])]}"/>
                                <field name="job_position_ids" widget="many2many_tags" options="{'no_create': True}" attrs="{'invisible':[('select_based_on','!=','job_position')],'required':[('select_based_on','=','job_position')],'readonly':[('state','in',['on_process','calibrated'])]}"/>
                                <field name="employee_ids" widget="many2many_tags" options="{'no_create': True}" attrs="{'invisible':[('select_based_on','!=','employee')],'required':[('select_based_on','=','employee')],'readonly':[('state','in',['on_process','calibrated'])]}"/>
                                <field name="calibrator_id" readonly="1" force_save="1"/>
                                <field name="create_date"/>
                                <field name="company_id" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="calibration_details" string="Calibration Details">
                                <field name="calibration_lines_ids" nolabel="1">
                                    <tree editable="bottom" create="0" delete="0">
                                        <field name="evaluation_id" readonly="1" force_save="1" invisible="1"/>
                                        <field name="employee_id" readonly="1" force_save="1"/>
                                        <field name="n_grid_id" readonly="1" force_save="1"/>
                                        <field name="overal_score" readonly="1" force_save="1"/>
                                        <field name="adjust_id" options="{'no_create': True, 'no_open': True}" attrs="{'readonly':[('parent.state','in',['draft','calibrated'])]}"/>
                                        <field name="reason" attrs="{'readonly':[('parent.state','in',['draft','calibrated'])]}"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="performance_calibration_search" model="ir.ui.view">
            <field name="name">hr.performance.calibration.search</field>
            <field name="model">hr.performance.calibration</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="sequence_number"/>
                </search>
            </field>
        </record>

        <record id="performance_calibration_act_window" model="ir.actions.act_window">
            <field name="name">Performance Calibration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.performance.calibration</field>
            <field name="view_mode">tree,form</field>
            <field name="context" eval="{}"/>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no data. Click here to add new Performance Calibration.
                </p>
            </field>
        </record>

        <menuitem name="Performance Calibration" id="performance_calibration_menu"
                  parent="employee_performance.menu_template"
                  action="performance_calibration_act_window"
                  sequence="2"/>
    
    </data>
</odoo>