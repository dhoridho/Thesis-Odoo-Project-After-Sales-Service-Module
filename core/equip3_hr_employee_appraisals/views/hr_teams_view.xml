<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_teams_tree_view" model="ir.ui.view">
            <field name="name">hr.teams.tree</field>
            <field name="model">hr.teams</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="leader_team_id"/>
                    <field name="team_member_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <record id="hr_teams_form_view" model="ir.ui.view">
            <field name="name">hr.teams.form</field>
            <field name="model">hr.teams</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                               <field name="name" required="1"/>
                                <field name="leader_team_id" required="1" options="{'no_create': True,'no_open': True}"/>
                                <field name="team_member_ids" widget="many2many_tags" required="1" options="{'no_create': True}"/>
                                <field name="company_id" readonly="1"/>
                                <field name="create_uid"  string = "Created by" options="{'no_open': True}"/>
                                <field name="create_date" string = "Created on"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_teams_search" model="ir.ui.view">
            <field name="name">hr.teams.search</field>
            <field name="model">hr.teams</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="leader_team_id"/>
                </search>
            </field>
        </record>

        <record id="hr_teams_act_window" model="ir.actions.act_window">
            <field name="name">Teams</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.teams</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no data. Click here to add new Teams.
                </p>
            </field>
        </record>

        <menuitem name="Teams" id="hr_teams_menu"
                  parent="employee_performance.menu_performance_config"
                  action="hr_teams_act_window"
                  sequence="16"/>
    </data>
</odoo>