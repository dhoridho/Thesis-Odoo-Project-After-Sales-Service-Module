<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="successor_parameter_template_view" model="ir.ui.view">
            <field name="name">successor.parameter.template.tree</field>
            <field name="model">successor.parameter.template</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" readonly="1"/>
                </tree>
            </field>
        </record>

        <record id="successor_parameter_template_form" model="ir.ui.view">
            <field name="name">successor.parameter.template.form</field>
            <field name="model">successor.parameter.template</field>
            <field name="arch" type="xml">
                <form string="Sucessror Parameter Tempalte">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="template_lines" string="Successor Parameter">
                                <field name="successor_parameter_template_line_ids" nolabel="1">
                                    <tree editable="bottom" edit="1">
                                        <field name="successor_parameter_id"/>
                                        <field name="weight"/>
                                    </tree>
                                </field>
                                <div class="sub-total" style="padding-left: 10px; padding-right:10px;">
                                    <div class="row">
                                        <div class="col-6">
                                            <h3>Total</h3>
                                        </div>
                                        <div class="col-6 text-right">
                                            <h3><field name="total_weight" readonly="1" nolabel="1"/></h3>
                                        </div>
                                    </div>
                                </div>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        

        <record id="successor_parameter_template_action" model="ir.actions.act_window">
            <field name="name">Successor Parameter Template</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">successor.parameter.template</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                There is no data click here to add new Successor Parameter Template.
                </p>
            </field>
        </record>

        <menuitem
            name="Successor Parameter Template"
            id="successor_parameter_template_menu"
            parent="employee_performance.menu_performance_config"
            action="successor_parameter_template_action"
            sequence="20"/>

    </data>
</odoo>