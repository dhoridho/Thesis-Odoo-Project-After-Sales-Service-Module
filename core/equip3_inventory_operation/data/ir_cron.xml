<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.cron" id="internal_transfer_expire_date">
            <field name="name">Internal Transfer Expire Date</field>
            <field name="model_id" ref="model_internal_transfer" />
            <field name="code">model._expire_date_cron()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False" />
            <field name="nextcall"
                eval="(DateTime.now() + relativedelta(day=1)).strftime('%Y-%m-%d 07:00:00')" />
        </record>

