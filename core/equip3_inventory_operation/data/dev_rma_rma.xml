<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="dev_rma.sequence_dev_rma_rma" model="ir.sequence">
        <field name="name">RMA Sequence</field>
        <field name="code">dev.rma.rma</field>
        <field name="prefix">/%(year)s/%(month)s/%(day)s/</field>
        <field name="padding">5</field>
    </record>

    <record id="ir_base_automation_transfer_waiting" model="base.automation">
        <field name="name">Transfers: Waiting Transfer</field>
        <field name="model_id" ref="stock.model_stock_picking"/>
        <field name="state">code</field>
        <field name="code">action = records.transfer_log_action()</field>
        <field name="trigger">on_write</field>
        <field name="active" eval="True"/>
        <field name="model_id" ref="stock.model_stock_picking"/>
        <field name="filter_domain">[('state', '!=', 'waiting')]</field>
        <field name="filter_pre_domain">[('state', '=', 'waiting')]</field>
    </record>

    <record id="ir_base_automation_transfer_confirmed" model="base.automation">
        <field name="name">Transfers: Waiting</field>
        <field name="model_id" ref="stock.model_stock_picking"/>
        <field name="state">code</field>
