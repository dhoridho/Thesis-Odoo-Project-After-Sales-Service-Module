        <field name="trigger">on_write</field>
        <field name="active" eval="True"/>
        <field name="model_id" ref="stock.model_stock_picking"/>
        <field name="filter_domain">[('state', '!=', 'confirmed')]</field>
        <field name="filter_pre_domain">[('state', '=', 'confirmed')]</field>
    </record>

    <record id="ir_base_automation_transfer_assigned" model="base.automation">
        <field name="name">Transfers: Ready</field>
        <field name="model_id" ref="stock.model_stock_picking"/>
        <field name="state">code</field>
        <field name="code">action = records.transfer_log_action()</field>
        <field name="trigger">on_write</field>
        <field name="active" eval="True"/>
        <field name="model_id" ref="stock.model_stock_picking"/>
        <field name="filter_domain">[('state', '!=', 'assigned')]</field>
        <field name="filter_pre_domain">[('state', '=', 'assigned')]</field>
    </record>

    <record id="ir_base_automation_transfer_done" model="base.automation">
        <field name="name">Transfers: Done</field>
        <field name="model_id" ref="stock.model_stock_picking"/>
        <field name="state">code</field>
        <field name="code">action = records.transfer_log_action()</field>
        <field name="trigger">on_write</field>
        <field name="active" eval="True"/>
        <field name="model_id" ref="stock.model_stock_picking"/>
        <field name="filter_domain">[('state', '!=', 'done')]</field>
        <field name="filter_pre_domain">[('state', '=', 'done')]</field>
    </record>

    <record id="ir_base_automation_transfer_cancel" model="base.automation">
        <field name="name">Transfers: Cancel</field>
        <field name="model_id" ref="stock.model_stock_picking"/>
        <field name="state">code</field>
        <field name="code">action = records.transfer_log_action()</field>
        <field name="trigger">on_write</field>
