<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_partial_quantity_done_wizard" model="ir.ui.view">
            <field name="name">partial.quantity.done.view.form</field>
            <field name="model">partial.quantity.done</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="d-flex">
                            <label for="product_id"/>:
                            <field name="product_id" string="Product" style="width: 20%; margin-left: 20px" readonly="1" force_save="1"/>
                        </div>
                        <br/>
                        <div class="d-flex">
                            <label for="done_qty"/>:
                            <field name="done_qty" string="Done" style="width: 20%; margin-left: 20px"/> %
                        </div>
                    </sheet>
                    <footer>
                        <button name="action_confirm_partial_quantity" type="object" string="Confirm" class="btn btn-primary"/>
                        <button name="cancel" string="Cancel" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>

</odoo>
