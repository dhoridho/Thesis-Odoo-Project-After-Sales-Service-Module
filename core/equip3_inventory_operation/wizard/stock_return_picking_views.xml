<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_stock_return_picking_form" model="ir.ui.view">
        <field name="name">Return lines</field>
        <field name="model">stock.return.picking</field>
        <field name="inherit_id" ref="stock.view_stock_return_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_return_moves']//field[@name='product_id']" position="after">
                <field name="lot_id" domain="[('id', 'in', allowed_lot_ids)]" options="{'no_create': True, 'no_open': True}"/>
                <field name="allowed_lot_ids" widget="many2many_tags" invisible="1"/>
                <field name="changed_to_refund_time" invisible="1"/>
            </xpath>
        </field>
    </record>

</odoo>