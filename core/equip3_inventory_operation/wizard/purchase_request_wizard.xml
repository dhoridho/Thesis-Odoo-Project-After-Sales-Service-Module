<odoo>



    <record model="ir.ui.view" id="purchase_request_wizard_form_view">
        <field name="name">purchase.request.wizard.form</field>
        <field name="model">purchase.request.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="pr_wizard_line" context="{'pr_wizard_line':pr_wizard_line}">
                        <tree editable="bottom" create="true" delete="true">
                            <field name="no"/>
                            <field name="mr_id" invisible="1"/>
                            <field name="mr_line_id" invisible="1"/>
                            <field name="product_id"/>
                            <field name="description"/>
                            <field name="uom_id"/>
                            <field name="qty_purchase"/>
                            <field name="dest_warehouse_id"/>
                            <field name="request_date" />
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button name="create_pr" type="object" string="Create Purchase Request" class="btn btn-primary"/>
                    <button name="cancel" string="Discard" special="cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="view_show_material_done_popup" model="ir.ui.view">
        <field name="name">show.material.done.popup.form</field>
        <field name="model">show.material.done.popup</field>
        <field name="arch" type="xml">
            <form string='Show Material Popup'>
                <span>
                    Lines still have Qty to Process !
                </span>
                <footer>
                    <button string='Force Done' name="force_done_material_request" type='object' class='btn-primary'/>
                    <button string='Cancel' class='btn-default' special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="mr_line_pr_wizard_form_view">
        <field name="name">mr_line.pr.wizard</field>
        <field name="model">mr_line.pr.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Purchase Request">
                <sheet>
                    <field name="pr_wizard_line" context="{'pr_wizard_line':pr_wizard_line}">
                        <tree editable="bottom" create="true" delete="true">
                            <field name="no" force_save="true"/>
                            <field name="mr_id"/>
                            <field name="product_id"/>
                            <field name="description"/>
                            <field name="uom_id"/>
                            <field name="qty_purchase"/>
                            <field name="dest_warehouse_id"/>
                            <field name="request_date" />
                            <field name="mr_line_id" invisible="1"/>
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button name="create_pr" type="object" string="Create Purchase Request" class="btn btn-primary"/>
                    <button name="cancel" string="Discard" special="cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
