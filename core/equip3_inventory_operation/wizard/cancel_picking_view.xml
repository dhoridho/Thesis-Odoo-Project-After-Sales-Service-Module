<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_cancel_picking_form" model="ir.ui.view">
        <field name="name">view.cancel.picking.form</field>
        <field name="model">cancel.picking</field>
        <field name="arch" type="xml">
         <form string="Reject Reason">
            <group>
                <group>
                    <field name="reason"/>
                </group>
            </group>
            <footer>
                    <button string="Cancel Picking" name="cancel_picking" type="object" class="oe_highlight"/>
                    or
                    <button string="Discard" class="oe_link" special="cancel"/>
                </footer>
         </form>
       </field>
    </record>

    <record id="action_cancel_picking" model="ir.actions.act_window">
        <field name="name">Cancel Picking</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cancel.picking</field>
        <field name="binding_view_types">form</field>
        <field name="view_id" ref="view_cancel_picking_form"/>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
