<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_return_request_sale_order" model="ir.ui.view">
        <field name="name">sale.order.repair.form</field>
        <field name="model">sale.order.repair</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="repair_type" widget="radio"/>
                        <field name="return_sale_order_id" invisible="1"/>
                    </group>
                    <group>
                        <field name="is_return_required"/>
                    </group>
                </group>
                <field name="repair_line_ids" nolabel="1">
                    <tree>
                        <field name="product_id"/>
                        <field name="quantity"/>
                        <field name="location_id"/>
                    </tree>
                </field>
                <footer>
                    <button string="Confirm" name="action_confirm" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
