<odoo>

    <record model="ir.ui.view" id="internal_transfer_wizard_form_view">
        <field name="name">mr.internal.transfer</field>
        <field name="model">mr.internal_transfer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="ir_wizard_line" context="{'ir_wizard_line':ir_wizard_line}">
                        <tree editable="bottom" create="false" delete="true">
                            <field name="no"/>
                            <field name="mr_id" invisible="1"/>
                            <field name="mr_line_id" invisible="1"/>
                            <field name="product_id"/>
                            <field name="description"/>
                            <field name="uom_id"/>
                            <field name="source_warehouse_id" required="1"/>
                            <field name="dest_warehouse_id"/>
                            <field name="filter_warehouse_ids" widget="many2many_tags" invisible="1"/>
                            <field name="filter_location_ids" widget="many2many_tags" invisible="1"/>
                            <field name="source_location" invisible="1"/>
                            <field name="current_qty" readonly="1" force_save="1" invisible="1"/>
                            <field name="virtual_available" invisible="1"/>
                            <field name="qty_transfer"/>
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button name="create_ir" type="object" string="Create Internal Transfer" class="btn btn-primary"/>
                    <button name="cancel" string="Discard" special="cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>


    <record model="ir.ui.view" id="mr_line_internal_transfer_wizard_form_view">
        <field name="name">mr_line.internal_transfer</field>
        <field name="model">mr_line.internal_transfer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="ir_wizard_line" context="{'ir_wizard_line':ir_wizard_line}">
                        <tree editable="bottom" create="false" delete="true">
                            <field name="no"/>
                            <field name="mr_id"/>
                            <field name="product_id"/>
                            <field name="description"/>
                            <field name="uom_id"/>
                            <field name="source_warehouse_id" required="1" domain="[('id', '!=', dest_warehouse_id)]"/>
                            <field name="dest_warehouse_id"/>
                            <field name="filter_warehouse_ids"  widget="many2many_tags" invisible="1"/>
                            <field name="filter_location_ids" widget="many2many_tags" invisible="1"/>
                            <field name="source_location" invisible="1"/>
                            <field name="current_qty" readonly="1" invisible="1" force_save="1"/>
                            <field name="virtual_available" invisible="1"/>
                            <field name="qty_transfer"/>
                            <field name="mr_line_id" invisible="1"/>
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button name="create_ir" type="object" string="Create Internal Transfer" class="btn btn-primary"/>
                    <button name="cancel" string="Discard" special="cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>



</odoo>
