<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sh_product_barcode_mobile_wizard_form_inherit" model="ir.ui.view">
        <field name="name">sh.product.barcode.mobile.wizard.form.inherit</field>
        <field name="model">sh.product.barcode.mobile.wizard</field>
        <field name="inherit_id" ref="sh_all_in_one_mbs.sh_product_barcode_mobile_wizard_form"/>
        <field name="arch" type="xml">
            <xpath expr="//section[hasclass('oe_edit_only')]" position="after">
                <field name="post_msg" position="move" />
                <field name="product_line_id" nolabel="1" attrs="{'invisible': [('post_msg', 'in', ['',False] )]}" readonly="1" force_save="1" class="mt-4">
                    <tree create="false" edit="false" delete="false">
                        <field name="location_id"/>
                        <field name="on_hand_qty"/>
                        <field name="available_quantity"/>
                        <field name="product_uom_id"/>
                    </tree>
                    <form create="false" edit="false" delete="false">
                        <group>
                            <field name="location_id" readonly="1"/>
                            <field name="on_hand_qty" readonly="1"/>
                            <field name="available_quantity" readonly="1"/>
                        </group>
                        <group>
                            <field name="product_uom_id" readonly="1"/>
                            <field name="value" readonly="1"/>
                            <field name="company_id" readonly="1"/>
                        </group>
                    </form>
                </field>
            </xpath>
        </field>
    </record>

</odoo>
