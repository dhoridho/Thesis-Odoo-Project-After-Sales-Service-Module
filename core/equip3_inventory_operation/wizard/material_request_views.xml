<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_tree_stock_quant_show_stock" model="ir.ui.view">
        <field name="name">material.request.show.stock.form</field>
        <field name="model">material.request.show.stock</field>
        <field name="arch" type="xml">
            <form>
                <field name="stock_quant_line_ids" nolabel="1" readonly="1">
                    <tree>
                        <field name="product_id"/>
                        <field name="quantity" string="On Hand"/>
                        <field name="available_quantity"/>
                        <field name="forecast_incoming"/>
                        <field name="forecast_outcoming"/>
                        <field name="forecast_qty" />
                        <field name="location_id"/>
                        <field name="warehouse_id"/>
                    </tree>
                </field>
                <footer>
                    <button string="Cancel" special="cancel" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
