<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="stock_lot_serialize_views">
        <field name="name">stock.lot.serialize.form</field>
        <field name="model">stock.lot.serialize</field>
        <field name="arch" type="xml">
            <form>
                <span>There are several products with lot numbers to be serialized. Please configure the quantity per lot.</span>
                <field name="picking_id" invisible="1"/>
                <field name="line_ids" force_save="1">
                    <tree editable="bottom" create="0" delete="0">
                        <field name="sequence" readonly="1" force_save="1"/>
                        <field name="product_id" readonly="1" force_save="1"/>
                        <field name="demand_qty" readonly="1" force_save="1"/>
                        <field name="qty_per_lot"/>
                        <field name="move_id" invisible="1"/>
                    </tree>
                </field>
                <footer>
                    <button name="action_confirm" type="object" string="Confirm" class="btn btn-primary"/>
                    <button name="cancel" string="Discard" special="cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_stock_lot_serialize_views" model="ir.actions.act_window">
        <field name="name">Stock Move Lot Serialize</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.lot.serialize</field>
        <field name="binding_view_types">form</field>
        <field name="view_id" ref="stock_lot_serialize_views"/>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
