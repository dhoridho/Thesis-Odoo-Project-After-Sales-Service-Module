<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="report_material_request_exclusive" model="ir.actions.report">
        <field name="name">Exclusive</field>
        <field name="model">material.request</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">equip3_inventory_operation.report_material_request_custom_exclusive</field>
        <field name="report_file">equip3_inventory_operation.report_material_request_custom_exclusive</field>
        <field name="print_report_name">
            (Purchase Request - %s' % (object.name))</field>
        <field name="binding_model_id" ref="equip3_inventory_operation.model_material_request"/>
        <field name="binding_type">report</field>
        <field name="binding_view_types">None</field>
    </record>

    <template id="purchase_material_template_external_layout">
        <!-- Multicompany -->
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <t t-call="equip3_inventory_operation.material_request_template_header"/>
        <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
            <t t-raw="0"/>
        </div>
        <t t-call="general_template.templates_footer"/>
    </template>

    <template id="material_request_template_header">
        <div class="header" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                <tbody>
                    <tr>
                        <td>
                            <center>
                                <table border="0" cellpadding="0" cellspacing="0" style="padding:0px 20px 0px 20px; margin:0; background:#fff; line-height:20px; vertical-align:middle; float:none;" width="100%">
                                    <tr>
                                        <td align="left" colspan="2" t-attf-style="vertical-align:middle; float:none; color:#{text_color or '#ffffff'}; padding:0 0px;" valign="top">
                                            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                <tr>
                                                    <td align="left" style="color:#4D4D4F; padding: 0px 15px; border-right: 1px solid #D4D1D1; width:10%; vertical-align:top; float:none;" valign="top">
                                                        <img style="max-height:50px; vertical-align: top; float:none;" t-att-src="'data:image/png;base64,%s'% to_text(o.company_id.logo)" t-if="o.company_id.logo"/>
                                                        <br/>
                                                    </td> 
                                                    <td style="padding:15px 0px 0px 15px; width:30%" valign="top">
                                                        <p t-attf-style="text-transform:capitalize; color: #{theme_color or '#ffffff'}; font-weight:bold;margin:0; margin-bottom:5px;">Address</p>
                                                        <t t-call="general_template.templates_company_details"/>
                                                        <br/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </center>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </template>

    
    <template id="material_request_template_lines">
        <table BORDERCOLOR="#{theme_color or '#000000'}" border="1" cellpadding="0" cellspacing="0" class="table table-bordered" style="border:0.5px solid #ccc;  border-collapse: collapse; text-transform:capitalize; padding:15px;border-bottom:1px solid #ccc;" width="100%">
            <thead>
                <tr t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'};">
                    <td align="center" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">No</td>
                    <td align="center" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="35%">Product</td>
                    <td align="center" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">Description</td>
                    <td align="center" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">Quantity</td>
                    <td align="center" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">Unit of Measure</td>
                    <td align="center" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">Expected Date</td>
                </tr>
            </thead>
            <tbody>
                <t t-as="l" t-foreach="o.product_line">
                    <t t-if="l_odd">
                        <t t-set="ol_color" t-value="o.company_id.even_party_color"/>
                    </t>
                    <t t-if="l_even">
                        <t t-set="ol_color" t-value="o.company_id.odd_party_color"/>
                    </t>
                    <tr t-att-style="'page-break-inside: avoid !important;background-color: '+ ol_color + '; color: '+ text_color">
                        <td align="left" class="text-center" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                            <span t-esc="l_index+1"/>
                        </td>
                        <td align="left" class="text-left" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                            <span t-field="l.product" />
                        </td>
                        <td align="left" class="text-left" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                            <span t-field="l.description" t-options="{'widget': 'text'}"/>
                        </td>
                        <td align="center" class="text-center" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                            <span t-field="l.quantity"/>
                        </td>
                        <td class="text-center" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                            <span t-field="l.product_unit_measure"/>
                        </td>
                        <td class="text-center" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                            <span t-field="l.request_date"/>
                        </td>
                    </tr>
                </t>
            </tbody>
        </table>
        <br/>
        <div t-if="o.internal_note" class="col-6 p-0">
            Note: <span t-field="o.internal_note"/>
        </div>
        <br/>
        <br/>
        <br/>
        <br/>
        <p style="width: 170px; float: right; margin-right: -40px;"> Acknowledged By</p>
        <br/>
        <br/>
        <br/>
        <div class="position-absolute" style="margin-top:60px;page-break-inside: avoid; border-bottom: 1px solid black; width: 200px; right: 15px;">
        </div>
    </template>

    <template id="report_material_request_main">
        <t t-call="equip3_inventory_operation.purchase_material_template_external_layout">
            <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color"/>
            <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color"/>
            <t t-set="company_color" t-value="o.company_id and o.company_id.company_color"/>
            <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color"/>
            <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color"/>
            <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color"/>
            <t t-set="text_color" t-value="o.company_id and o.company_id.text_color"/>
            <div class="page" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                <div class="oe_structure"/>
                <t t-call="general_template.templates_watermark"/>
                <br/>
                <div width="100%" t-if="o.source_document">
                    <div style="padding:0px 20px 20px 20px; margin:0; background:#fff; line-height:20px;" width="100%">
                        <div align="left" style="padding: 0px 0px 0px 15px;background-color: #3f3f3f;color: #fff; text-transform: capitalize;border: 1 px solid #3f3f3f;" valign="top">
                            <div class="row d-flex">
                                <div class="col-5">
                                    <strong>Material Request Reference </strong>
                                    <br/> 
                                    <span t-esc="o.name"/>
                                </div> 
                                <div class="col-4 ">
                                    <strong>Source Document</strong>
                                    <br/>
                                    <span t-esc="o.source_document"/>
                                </div>
                                <div style="margin-left:95px;">
                                    <strong>Requested By </strong>
                                    <br/>
                                    <span t-esc="o.requested_by.name"/>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex pt-2" style="background-color: #3f3f3f;color: #fff; text-transform: capitalize;border: 1 px solid #3f3f3f;">
                            <div class="col-5 mr-1">
                                <strong>Destination Warehouse</strong>
                                <br/>
                                <span t-esc="o.destination_warehouse_id.display_name"/>
                            </div>
                            <div class="col-5 mr-1">
                                <strong>Scheduled Date </strong>
                                <br/>
                                <span t-esc="o.schedule_date"/>
                            </div>
                            <div class="col-5 mr-1">
                                <strong>Expiry Date </strong>
                                <br/>
                                <span t-esc="o.expiry_date"/>
                            </div>                                
                        </div>                       
                        <div>
                            <p  t-attf-style="padding:5px 0px 0px 0px; height:20px;"/>
                        </div>
                        <div>
                            <t t-call="equip3_inventory_operation.material_request_template_lines"/>
                        </div>
                    </div>
                </div>
                <div width="100%" t-if="not o.source_document">
                    <div style="padding:0px 20px 20px 20px; margin:0; background:#fff; line-height:20px;" width="100%">
                        <div align="left" style="padding: 0px 0px 0px 15px;background-color: #3f3f3f;color: #fff; text-transform: capitalize;border: 1 px solid #3f3f3f;" valign="top">
                            <div class="row d-flex">
                                <div class="col-5">
                                    <strong>Material Request Reference </strong>
                                    <br/> 
                                    <span t-esc="o.name"/>
                                </div> 
                                <div t-if="o.source_document" class="col-4 ">
                                    <strong>Source Document</strong>
                                    <br/>
                                    <span t-esc="o.source_document"/>
                                </div>
                                <div class="col-5">
                                    <strong>Requested By </strong>
                                    <br/>
                                    <span t-esc="o.requested_by.name"/>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex pt-2" style="background-color: #3f3f3f;color: #fff; text-transform: capitalize;border: 1 px solid #3f3f3f;">
                            <div class="col-5 mr-1">
                                <strong>Destination Warehouse</strong>
                                <br/>
                                <span t-esc="o.destination_warehouse_id.display_name"/>
                            </div>
                            <div class="col-5 mr-1">
                                <strong>Scheduled Date </strong>
                                <br/>
                                <span t-esc="o.schedule_date"/>
                            </div>
                            <div class="col-5 mr-1">
                                <strong>Expiry Date </strong>
                                <br/>
                                <span t-esc="o.expiry_date"/>
                            </div>                                
                        </div>                       
                        <div>
                            <p  t-attf-style="padding:5px 0px 0px 0px; height:20px;"/>
                        </div>
                        <div>
                            <t t-call="equip3_inventory_operation.material_request_template_lines"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </div>
        </t>
    </template>

    <template id="report_material_request_custom_exclusive">
        <t t-call="web.html_container">
            <t t-as="o" t-foreach="docs">
                <t t-call="equip3_inventory_operation.report_material_request_main" />
            </t>
        </t>
    </template>

    <template id="equip3_inventory_operation.report_material_request_request">
        <t t-call="web.html_container">
            <t t-set="report_name" t-value="{'report_material_request_custom_exclusive': 'equip3_inventory_operation.report_material_request_main'}"/>
            <t t-call="equip3_inventory_operation.report_material_request_custom_exclusive" />
        </t>
    </template>

</odoo>
