<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_quant_package_form" model="ir.ui.view">
        <field name="name">stock.quant.package.form.view.inherit</field>
        <field name="model">stock.quant.package</field>
        <field name="inherit_id" ref="stock.view_quant_package_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='location_id']" position="after">
                <field name="package_measure_selection" invisible="1"/>
                <label for="length" attrs = "{'invisible' : [('package_measure_selection', '!=', 'length')]}"/>
                    <div class="d-flex">
                        <field class="mr-2" name="length" attrs = "{'invisible' : [('package_measure_selection', '!=', 'length')]}"/>
                        <span class="mr-2" attrs = "{'invisible' : [('package_measure_selection', '!=', 'length')]}">cm</span>    
                    </div>

                <label for="maximum_length" attrs = "{'invisible' : [('package_measure_selection', '!=', 'length')]}"/>
                    <div class="d-flex">
                        <field class="mr-2" name="maximum_length" attrs = "{'invisible' : [('package_measure_selection', '!=', 'length')]}"/>
                        <span class="mr-2" attrs = "{'invisible' : [('package_measure_selection', '!=', 'length')]}">cm</span>    
                    </div>
                
                <label for="width" attrs = "{'invisible' : [('package_measure_selection', '!=', 'width')]}"/>
                    <div class="d-flex">
                        <field class="mr-2" name="width" attrs = "{'invisible' : [('package_measure_selection', '!=', 'width')]}"/>
                        <span class="mr-2" attrs = "{'invisible' : [('package_measure_selection', '!=', 'width')]}">cm</span>    
                    </div>

                <label for="maximum_width" attrs = "{'invisible' : [('package_measure_selection', '!=', 'width')]}"/>
                    <div class="d-flex">
                        <field class="mr-2" name="maximum_width" attrs = "{'invisible' : [('package_measure_selection', '!=', 'width')]}"/>
                        <span class="mr-2" attrs = "{'invisible' : [('package_measure_selection', '!=', 'width')]}">cm</span>    
                    </div>

                <label for="height" attrs = "{'invisible' : [('package_measure_selection', '!=', 'height')]}"/>
                    <div class="d-flex">
                        <field class="mr-2" name="height" attrs = "{'invisible' : [('package_measure_selection', '!=', 'height')]}"/>
                        <span class="mr-2" attrs = "{'invisible' : [('package_measure_selection', '!=', 'height')]}">cm</span>    
                    </div>

                <label for="maximum_height" attrs = "{'invisible' : [('package_measure_selection', '!=', 'height')]}"/>
                    <div class="d-flex">
                        <field class="mr-2" name="maximum_height" attrs = "{'invisible' : [('package_measure_selection', '!=', 'height')]}"/>
                        <span class="mr-2" attrs = "{'invisible' : [('package_measure_selection', '!=', 'height')]}">cm</span>    
                    </div>

                <label for="volume" attrs = "{'invisible' : [('package_measure_selection', '!=', 'volume')]}"/>
                    <div class="d-flex">
                        <field class="mr-2" name="volume" attrs = "{'invisible' : [('package_measure_selection', '!=', 'volume')]}"/>
                        <span class="mr-2" attrs = "{'invisible' : [('package_measure_selection', '!=', 'volume')]}">cm3</span>    
                    </div>

                <label for="maximum_volume" attrs = "{'invisible' : [('package_measure_selection', '!=', 'volume')]}"/>
                    <div class="d-flex">
                        <field class="mr-2" name="maximum_volume" attrs = "{'invisible' : [('package_measure_selection', '!=', 'volume')]}"/>
                        <span class="mr-2" attrs = "{'invisible' : [('package_measure_selection', '!=', 'volume')]}">cm3</span>    
                    </div>
            </xpath>    
        </field>
    </record>
</odoo>
