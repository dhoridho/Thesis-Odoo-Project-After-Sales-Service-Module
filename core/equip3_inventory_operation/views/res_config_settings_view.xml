<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_form_res_setting_config_inherit" model="ir.ui.view">
        <field name="name">res.config.setting.view.form.inherite</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale_stock.res_config_settings_view_form_stock"/>
         <field name="arch" type="xml">
            <xpath expr="//field[@name='module_procurement_jit']/../../../.." position="after">
                 <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <div class="content-group">
                            <label for="ex_period"/>
                            <div class="text-muted">
                                   Set expiry period in day(s) of Interwarehouse Transfer Request document.
                            </div>
                            <div class="content-group material_request_expiry">
                                <div class="mt16">
                                    <label for="ex_period" string="Interwarehouse Transfer Request Expiry"/>
                                    <field name="ex_period"/>days
                                    <field name="itr_expiry_days"/>the Scheduled Date
                                </div>
                                <div class="text-muted">
                                    Set as 0 days if Expiry Date same as Scheduled Date.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
				<div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="material_request"/>
                        <div class="text-muted">
                            Set expiry period in day(s) of Material Request document
                        </div>
                        <div class="content-group material_request_expiry">
                            <div class="mt10">
                                <label for="material_request" string="Material Request Expiry"/>
                                <field name="material_request"/>days
                                <field name="mr_expiry_days"/>the Scheduled Date
                            </div>
                            <div class="text-muted">
                                Set as 0 days if Expiry Date same as Scheduled Date.
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box" id="process_transfers" invisible="1">
                    <div class="o_setting_left_pane">
                        <field name="is_product_service_operation"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="is_product_service_operation"/>
                        <div class="text-muted">
                            Creates A Receiving Note Or Delivery Order For Product Service Type
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box" id="process_transfers">
                    <div class="o_setting_left_pane">
                        <field name="is_product_service_operation_delivery"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="is_product_service_operation_delivery"/>
                        <div class="text-muted">
                            Creates A Delivery Order For Product Service Type
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box" id="process_transfers">
                    <div class="o_setting_left_pane">
                        <field name="is_product_service_operation_receiving"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="is_product_service_operation_receiving"/>
                        <div class="text-muted">
                            Creates A Receiving Note For Product Service Type
                        </div>
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[@data-string='Inventory']//div[hasclass('o_settings_container')]" position="inside">
                <div class="col-12 col-lg-6 o_setting_box product_usage_expiry">
                    <div class="o_setting_left_pane">
                        <field name="is_return_limit_policy" class="oe_inline" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="is_return_limit_policy"/>
                        <div class="text-muted">
                            Set period in day(s) of the Return Policy.
                        </div>
                        <div attrs="{'invisible': [('is_return_limit_policy','=',False)]}">
                            <b>Return Policy eligible </b>
                            <field name="return_policy_days" class="mb0"/>
                            <b> days after the Delivered / Received Date</b>
                            <div class="text-muted">
                                Set as 0 days if the Return Limit Policy Date is the same as the Delivered / Received Date.
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('inventory', '=', False)]}">
                    <div class="o_setting_left_pane">
                        <field name="measure_for_packaging_config"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="measure_for_packaging_config"/>
                        <div class="text-muted">
                            Set Measure For Packaging on menu
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="res_setting_config_inherit_form_view" model="ir.ui.view">
        <field name="name">res.config.setting.view.form.inherite</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
         <field name="arch" type="xml">
            <xpath expr="//field[@name='group_stock_adv_location']/../.." position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="is_display_warehouse_address"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="is_display_warehouse_address"/>
                        <div class="text-muted">
                            Warehouse address will appear on delivery slip
                        </div>
                    </div>
                </div>		
            </xpath>
        </field>
    </record>

        <record id="res_setting_config_inherit_form_view" model="ir.ui.view">
        <field name="name">res.config.setting.view.form.inherite</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
         <field name="arch" type="xml">
            <xpath expr="//div[@name='integration']" position="after">
                <h2>Warehouse Management</h2>
                <div class="row mt16 o_settings_container" name="warehouse_management">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_warehouse_shipments"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_warehouse_shipments"/>
                            <div class="text-muted">
                                Manage The Warehouse Shipments Route
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="qty_can_minus"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="qty_can_minus"/>
                            <div class="text-muted">
                                Qty can Minus Boolean
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

