<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_view_product_packaging_form" model="ir.ui.view">
        <field name="name">view.product.packaging.form.inherit</field>
        <field name="model">product.packaging</field>
        <field name="inherit_id" ref="product.product_packaging_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="filter_value_ids" widget="many2many_tags" options="{'no_create_edit':'1'}" invisible="1"/>
                <field name="measure_ids" widget="many2many_tags" options="{'no_create_edit':'1'}">
                    <tree>
                        <field name="measure"/>
                    </tree>
                    <form>
                        <sheet>
                            <field name="measure"/>
                        </sheet>
                    </form>
                </field>
                <field name="volume_calculation"/>
                <field name="volume_formula" invisible="1"/>
            </xpath>
        </field>
    </record>

</odoo>
