<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_view_assign_serial_numbers" model="ir.ui.view">
        <field name="name">stock.assign.serial.number.form.view.inherit</field>
        <field name="model">stock.assign.serial</field>
        <field name="inherit_id" ref="stock.view_assign_serial_numbers"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='next_serial_count']/.." position="after">
                <div class="action_upload_template d-inline-flex" role="alert" attrs="{'invisible': [('picking_type_code', '!=', 'incoming'), ('serial_no', '!=', 'serial')]}">
                    <span class="d-inline-flex"><field name="export_file" filename="export_name" nolabel="1"/></span>
                    <field name="export_name" invisible="1"/>
                    <span style="margin-top: 6px;margin-left: 10px;">Don't have the template?</span>
                    <a
                        href="/equip3_inventory_operation/static/sample_data/serial_num.xlsx"
                        target="_blank"
                        style="margin-top: 6px;margin-left: 7px;">
                        <div class="download_template_form">
                            <strong>Download The Template</strong>
                        </div>
                    </a>
                </div>
                <field name="picking_type_code" invisible="1"/>
                <field name="serial_no" invisible="1"/>
                <field name="is_serial_number" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='next_serial_number']" position="attributes">
                <attribute name="string">Current SN</attribute>
            </xpath>
            <xpath expr="//field[@name='next_serial_count']" position="attributes">
                <attribute name="string">Quantity To Serialize</attribute>
            </xpath>
            <field name="next_serial_count" position="attributes">
                <attribute name="attrs">{'required': [('export_file', '=', False)]}</attribute>
            </field>
            <field name="next_serial_number" position="attributes">
                <attribute name="attrs">{'invisible': [('is_serial_number', '=', False)]}</attribute>
            </field>
        </field>
    </record>
</odoo>