<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_form_product_template" model="ir.ui.view">
        <field name="name">product.template.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='route_ids']/.." position="after">
                <field name="is_product_service_operation" invisible = "1"/>
                <field name="is_product_service_operation_receiving" attrs="{'invisible':[('type', '!=', 'service')]}"/>
                <field name="is_product_service_operation_delivery" attrs="{'invisible':[('type', '!=', 'service')]}"/>
            </xpath>
            <xpath expr="//page[@name='inventory']" position="attributes">
                <attribute name="attrs"></attribute>
            </xpath>
        </field>
    </record>

    <record id="product_bundle_product_form_view" model="ir.ui.view">
        <field name="name">product.bundle.product.form.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="dynamic_product_bundle.product_bundle_product_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_pack']/parent::div" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="product_template_only_form_view" model="ir.ui.view">
        <field name="name">product.template.only.form.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="equip3_inventory_accessright_setting.view_template_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='accessright']" position="inside">
                <field name="is_pack" widget="boolean_toggle"/>
            </xpath>
        </field>
    </record>

    <record id="view_product_warehouse_price_tree_editable" model="ir.ui.view">
        <field name="name">view.product.warehouse.price.tree.editable</field>
        <field name="model">product.warehouse.price</field>
        <field name="inherit_id" ref="equip3_inventory_base.view_product_warehouse_price_tree_editable"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='standard_price']" position="attributes">
                <attribute name="attrs">{'readonly': [('cost_method', '!=', 'standard')]}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
