<odoo>
    <data>

        <record model="ir.ui.view" id="rn_approval_matrix_tree_view">
            <field name="name">rn.approval.matrix.tree</field>
            <field name="model">rn.approval.matrix</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="warehouse_id"/>
                    <field name="level" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="rn_approval_matrix_form_view">
            <field name="name">rn.approval.matrix.form</field>
            <field name="model">rn.approval.matrix</field>
            <field name="arch" type="xml">
                <form string="RN Approval Matrix Request">
                    <sheet>
                        <div class="oe_title">
                            <h1> <field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="company_id"/>
                                <field name="branch_id" />
                            </group>
                            <group>
                                <field name="warehouse_id" />
                                <field name="create_date"  readonly="True"/>
                                <field name="create_uid"  readonly="True"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Approver Line">
                                <field name="rn_approval_matrix_line_ids"   mode="tree" context="{'rn_approval_matrix_line_ids':rn_approval_matrix_line_ids}">
                                    <tree editable="bottom" class="class_container_approver_matrix">
                                        <field name="sequence" widget="handle"/>
                                        <field name="sequence1" force_save="1" readonly="1"/>
                                        <field name="approver" widget="many2many_tags" />
                                        <field name="minimal_approver" />
                                        <field name="rn_approval_matrix_id1" invisible="1" />
                                        <field name="picking_id" invisible="1" />
                                        </tree>
                                </field>
                            </page>
<!--                            <page string="Details">-->
<!--                                <field name="rn_approval_matrix_details_id"  create="False"  mode="tree">-->
<!--                                    <tree>-->
<!--                                        <field name="location_name" />-->
<!--                                        <field name="usage" />-->
<!--                                        <field name="company_id" />-->
<!--                                        <field name="rn_approval_matrix_id2" invisible="1" />-->
<!--                                    </tree>-->
<!--                                </field>-->
<!--                            </page>-->
                            <page name="location_child_ids" string="Details">
                            <field name="location_child_ids" create="0">
                                <tree create="false" no_create_edit="1">
                                    <field name="display_name" string="Location Name"/>
                                    <field name="usage"/>
                                    <field name="company_id"/>
                                </tree>
                            </field>
                        </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="rn_approval_matrix_action" model="ir.actions.act_window">
        <field name="name">Receiving Notes Approval Matrix</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">rn.approval.matrix</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="rn_approval_matrix_menu"
        name="Receiving Notes Approval Matrix"
        parent="equip3_inventory_masterdata.approval_matrix_material_configuration_menu"
        action="rn_approval_matrix_action"
        sequence="0"/>


    </data>
</odoo>