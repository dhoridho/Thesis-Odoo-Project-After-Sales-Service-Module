        <field name="domain">[('name', 'ilike', 'PACK')]</field>
        <field name="context">{'outgoing': False, 'pack' : True}</field>
    </record>
    <!--    Stock Picking Delivery ActWindow-->
    <record id="stock_picking_delivery_tree_action" model="ir.actions.act_window">
