    <record id="stock.stock_product_normal_action" model="ir.actions.act_window">
        <field name="name">Product Variants</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="search_view_id" ref="stock.stock_product_search_form_view"/>
        <field name="context">{'create': False}</field>
    </record>

    <!--    Batch Shipping Picking ActWindow-->
    <record id="stock_picking_pick_tree_action" model="ir.actions.act_window">
        <field name="name">Picking Log</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.picking</field>
        <field name="view_id" ref="stock.vpicktree"/>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('name', 'ilike', 'PICK')]</field>
        <field name="context">{'outgoing': False, 'pick' : True}</field>
    </record>
