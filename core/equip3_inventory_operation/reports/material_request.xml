<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Create Material Request PDF Report-->
    <template id="report_material_request_request_document">
        <t t-call="web.external_layout">
            <div class="page">
                <h3><strong><span t-field="o.name"/></strong></h3>
                <div class="row mb-4">
                    <div class="col-6">
                        <strong>Source Document: </strong><span t-field="o.source_document"/><br/>
                        <strong>Requested by: </strong><span t-field="o.requested_by.name"/><br/>
                        <strong>Destination Location: </strong><span t-field="o.destination_location_id.display_name"/>
                    </div>
                    <div class="col-6">
                        <strong>Created on: </strong><span t-field="o.create_date"/><br/>
                        <strong>Created by: </strong><span t-field="o.create_uid"/><br/>
                        <strong>Scheduled Date: </strong><span t-field="o.schedule_date"/><br/>
                        <t t-if="o.expiry_date">
                            <strong>Expiry Date: </strong>
                        </t><span t-field="o.expiry_date"/>
                    </div>
                </div>
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th><span>No</span></th>
                            <th><span>Product</span></th>
                            <th><span>Description</span></th>
                            <th class="text-right"><span>Quantity</span></th>
                            <th class="text-right"><span>Unit of Measure</span></th>
                            <th class="text-right"><span>Request Date</span></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="o.product_line" t-as="rec">
                            <td><span t-field="rec.no"/></td>
                            <td><span t-field="rec.product.name"/></td>
                            <td><span t-field="rec.description"/></td>
                            <td class="text-right"><span t-field="rec.quantity"/></td>
                            <td class="text-right"><span t-field="rec.product_unit_measure"/></td>
                            <td class="text-right"><span t-field="rec.request_date"/></td>
                        </tr>
                    </tbody>
                </table>
                <br/>
                <br/>
                <br/>
                <br/>
                <br/>
                <p style="width: 200px; float: right; margin-right: -40px;"> Acknowledge By</p>
                <br/>
                <br/>
                <br/>
                <div class="position-absolute" style="margin-top:60px;page-break-inside: avoid; border-bottom: 1px solid black; width: 200px; right: 15px;">
                </div>
            </div>
        </t>
    </template>

    <template id="report_material_request_request">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="equip3_inventory_operation.report_material_request_request_document"/>
            </t>
        </t>
    </template>
</odoo>
