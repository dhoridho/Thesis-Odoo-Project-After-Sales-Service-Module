<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_detailed_operations">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.html_container">
                        <t t-call="general_template.picking_exclusive_external_layout">
                            <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
                            <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color"/>
                            <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color"/>
                            <t t-set="company_color" t-value="o.company_id and o.company_id.company_color"/>
                            <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color"/>
                            <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color"/>
                            <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color"/>
                            <t t-set="text_color" t-value="o.company_id and o.company_id.text_color"/>
                            <div class="page" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                                <div width="100%">
                                    <div   style="margin:0; background:#fff;" width="100%">
                                        <div class="oe_structure"/>
                                        <div style="clear: both;display: table;width: 100%;">
                                            <div  t-attf-style="padding:10px 0px 0px 0px; height:5px;border-top: 1px solid #{theme_color or '#000000'};    margin-top: 25px;margin-bottom: 25px;"/>
                                        </div>
                                        <div class="row justify-content-end mb16">
                                            <div class="col-4" name="right_box">
                                                <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.name, 600, 100)" style="width:300px;height:50px;" alt="Barcode"/>
                                            </div>
                                        </div>
                                        <h1 t-field="o.name" class="mt0 float-left" style="padding-bottom: 25px !important;"/>
                                        <div align="left"  style="color:#4D4D4F; padding:0 0px;" valign="top">
                                            <table border="0" cellpadding="0" cellspacing="0" t-attf-style="color: #{theme_text_color or '#000000'}; border: 1px solid #{theme_color or '#000000'};" width="100%">
                                                <tr t-attf-style="background-color: #{theme_color or '#000000'};">
                                                    <td name="td_sched_date_h" t-attf-style="padding:5px 15px; font-weight:bold;">
                                                        <strong>
                                                            <span class="text-left">Scheduled Date</span>
                                                        </strong>
                                                        <br/>
                                                        <span t-field="o.scheduled_date"/>
                                                    </td>
                                                    <td t-attf-style="padding:5px 15px; font-weight:bold;" t-if="o._check_delivery_installed()">
                                                        <strong>
                                                            <span class="text-left">Weight</span>
                                                        </strong>
                                                        <br/>
                                                        <span t-field="o.weight"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </div>
                                        <div>
                                            <p t-attf-style="border-bottom:1px solid #{theme_color or '#ececec'}; padding:0px 0px 10px 0px; width:100%;"/>
                                        </div>
                                        <div align="left"  style="padding:20px 0px 0 0; font-weight:bold; width:100%;" valign="top">
                                            <table class="table table-sm" style="border:0.5px solid #ccc;  border-collapse: collapse; padding:15px; border-bottom:1px solid #ccc;" width="100%" t-if="o.move_line_ids and o.move_ids_without_package">
                                                <t t-set="has_barcode" t-value="any(move_line.product_id and move_line.product_id.sudo().barcode or move_line.package_id for move_line in o.move_line_ids)"/>
                                                <t t-set="has_serial_number" t-value="any(move_line.lot_id or move_line.lot_name for move_line in o.move_line_ids)" groups="stock.group_production_lot"/>
                                                <thead>
                                                    <tr t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'};">
                                                        <th name="th_serial_no" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="8%">No.</th>
                                                        <th name="th_product" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="22%">
                                                            <strong>Product</strong>
                                                        </th>
                                                        <th name="th_serial_number" class="text-center" t-if="has_serial_number" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="15%">
                                                           <strong>Lot/Serial Number</strong>
                                                        </th>
                                                        <th name="th_package" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="10%">
                                                            <strong>Package</strong>
                                                        </th>
                                                        <th name="th_name" class="text-center" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="15%">
                                                            <strong>Description</strong>
                                                        </th>
                                                        <th name="th_destination" class="text-center" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="10%">
                                                            <strong>Destination</strong>
                                                        </th>
                                                        <th name="th_done_qty" class="text-right" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="10%">
                                                            <strong>Done</strong>
                                                        </th>
                                                        <th name="th_uom" class="text-center" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="10%">
                                                            <strong>Unit of Measure</strong>
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <t t-set="count" t-value="0" />
                                                    <t t-foreach="o.move_ids_without_package" t-as="move">
                                                        <!-- In case you come across duplicated lines, ask NIM or LAP -->
                                                        <t t-foreach="move.move_line_ids.sorted(key=lambda ml: ml.location_id.id)" t-as="ml">
                                                            <t t-set="count" t-value="count+1" />
                                                            <t t-set="po_color" t-value="o.company_id.even_party_color"/>
                                                            <tr t-att-style="'page-break-inside: avoid !important;background-color: '+ po_color + '; color: ' + text_color ">
                                                                <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'"><span t-esc="count" /></td>
                                                                <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                                    <span t-field="ml.product_id.display_name"/><br/>
                                                                    <img t-if="ml.product_id.image_128" class="mt-1" t-att-src="image_data_uri(ml.product_id.image_128)" alt="Product" />
                                                                </td>
                                                                <td class=" text-center h6" t-if="has_serial_number" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                                    <span t-if="has_serial_number and (ml.lot_id or ml.lot_name)" t-field="ml.lot_id"/>
                                                                </td>
                                                                <td class="text-center" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                                    <span t-field="ml.result_package_id"/>
                                                                </td>
                                                                <td class="text-center" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                                    <span t-field="ml.move_id.product_description"/>
                                                                </td>
                                                                <td class="text-center" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                                    <span t-field="ml.location_dest_id"/>
                                                                </td>
                                                                <td class="text-right" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                                    <span t-field="ml.qty_done"/>
                                                                </td>
                                                                <td class="text-center" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                                    <span t-field="ml.product_uom_id"/>
                                                                </td>
                                                            </tr>
                                                        </t>
                                                    </t>
                                                  </tbody>
                                            </table>
                                        </div>
                                        <div align="right">
                                            <t t-call="general_template.report_signature"/>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </t>
                    </t>
                </t>
            </t>
        </template>

        <record id="action_report_detailed_operations" model="ir.actions.report">
            <field name="name">Detailed Operations</field>
            <field name="model">stock.picking</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">equip3_inventory_operation.report_detailed_operations</field>
            <field name="report_file">equip3_inventory_operation.report_detailed_operations</field>
            <field name="print_report_name">'Detailed Operations - %s - %s' % (object.partner_id.name or '', object.name)</field>
            <field name="binding_model_id" ref="model_stock_picking"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>
