<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <template id="report_lot_label_qr_code">
            <t t-call="web.basic_layout">
                <div class="page">
                    <t t-foreach="docs" t-as="o">
                        <div style="width: 32%; display: inline-table; height: 10rem;">
                            <table
                                class="table table-bordered mb-0"
                                style="border: 2px solid black;"
                            >
                                <tr>
                                    <th class="table-active text-left" style="height: 4rem;">
                                        <strong t-field="o.product_id.display_name" />
                                    </th>
                                </tr>
                                <tr>
                                    <td class="text-center align-middle" style="height: 6rem;">
                                        <t t-if="o.product_id.sh_qr_code">
                                            <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('QR', o.product_id.sh_qr_code, 100, 100)" style="width:100px;height:100px;"/>
                                            <br/>
                                            <span t-field="o.product_id.sh_qr_code" />
                                        </t>
                                        <t t-else=""><span
                                                class="text-muted"
                                            >No QR Code available</span></t>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </t>
                </div>
            </t>
        </template>
    </data>

    
</odoo>
