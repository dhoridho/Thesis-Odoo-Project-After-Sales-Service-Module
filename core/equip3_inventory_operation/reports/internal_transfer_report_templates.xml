        <xpath expr="//div[hasclass('page')]//div[4]" position="replace">
            <div align="left"  style="padding:20px 0px 0 0; font-weight:bold; width:100%;" valign="top">
                <t t-call="equip3_inventory_operation.delivery_templates_order_lines_report"/>
            </div>        
            <br/>
            <div class="ml-3" align="left"  style="padding:20px 0px 0 0; font-weight:bold; width:100%;" valign="top">
                <span t-if="o.note">Notes:</span><br/>
                <span t-esc="o.note" t-if="o.note"/>
            </div>
            <table style="width: 200px; height: 70px; float: right; margin-top:20px;" t-if="o.signature" align="right">
                <td style="border-bottom: 1px solid black;">
                    <div class="signature" style="padding: 5px;">
                        <img t-att-src="image_data_uri(o.signature)" style="max-height: 6rem; max-width: 100%;"/>
                    </div>
                </td>
            </table>
        </xpath>
        
    </template>
    
