    <template id="report_picking_barcode" inherit_id="general_template.report_picking_exclusive_main">        
        <xpath expr="//div[hasclass('page')]//div[2]" position="before">
            <hr style="border: 1px solid black;"/>


            <div class="col-12" name="right_box" style="margin-top: 60px;">
                <div class="col-xl-6" style="position:absolute; down:300px;left:-14px;">
                    <br/>
                    <span t-field="o.name"  style="font-size:2em;font-height:75px;"/>
                </div>
                <div class="col-xl-6" style="margin-top: 10px;">
                    <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.name, 600, 100)" style="width:400px;height:65px;margin-left:440px" alt="Barcode"/><br/>
                </div>
            </div>
            <br/>
        </xpath>
        <xpath expr="//div[hasclass('page')]//div[3]" position="replace">            
            <div align="left"  style="color:#4D4D4F; padding:0 0px;" valign="top">
                <table border="0" cellpadding="0" cellspacing="0" t-attf-style="color: #{theme_text_color or '#000000'}; border: 1px solid #{theme_color or '#000000'};" width="100%">
                    <tr t-attf-style="background-color: #{theme_color or '#000000'};">
                        <td t-attf-style="padding:5px 15px; font-weight:bold;">
                            <strong>Scheduled Date</strong>
                            <br/>
                            <span t-field="o.scheduled_date"/>
                        </td>
                        <td t-attf-style="padding:5px 15px; font-weight:bold;" t-if="o.origin">
                            <strong>Source Document</strong>
                            <br/>
                            <span t-field="o.origin"/>
                        </td>
                        <td t-attf-style="padding:5px 15px; font-weight:bold;" t-if="o.owner_id">
                            <strong>Owner</strong>
                            <br/>
                            <span t-field="o.owner_id"/>
                        </td>  
                        <td t-attf-style="padding:5px 15px; font-weight:bold;">
                            <strong>Weight</strong>
                            <br/>
                            <span t-field="o.weight"/>
                        </td>         
                    </tr>
                </table>
            </div>
        </xpath>
        <xpath expr="//div[hasclass('page')]//div[4]" position="replace">
            <div align="left"  style="padding:20px 0px 0 0; font-weight:bold; width:100%;" valign="top">
                <t t-call="equip3_inventory_operation.picking_templates_order_lines_report"/>
            </div>        
            <br/>
            <div align="left"  style="padding:20px 0px 0 0; font-weight:bold; width:100%;" valign="top">
