<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--Create PDF Report-->
    <template id="report_internal_transfer_request_document">
        <t t-call="web.external_layout">
            <div t-foreach="docs" t-as="o">
<!--                <p class="m-0" style="text-align:left;padding-left:10px; margin-bottom: 1em;"  t-field="o.company_id.name"/>-->
<!--                <p style="text-align:left;padding-left:10px; margin-bottom: 1em;"  t-field="o.company_id.street"/>-->
<!--                <p style="text-align:left;padding-left:10px; margin-bottom: 1em;"  t-field="o.company_id.state_id"/>-->
<!--                <p style="text-align:left;padding-left:10px; margin-bottom: 1em;"  t-field="o.company_id.country_id"/>-->
<!--                <p class="m-0" style="text-align:left;padding-left:10px; margin-bottom: 1em;"  t-field="o.branch_id"/>-->
<!--                <br/>-->
                <h3>
                    <span t-field="o.name"/>
                </h3>
                <br/>
                <div class="row mt32 mb32" >
                    <div class="col-auto col-6 mw-100 mb-2">
                        <p class="m-0"><strong>Source Document: </strong></p>
                        <p t-field="o.source_document"/>
                        <p class="m-0"><strong>Source Location: </strong></p>
                        <p t-field="o.source_location_id"/>
                        <p class="m-0"><strong>Destination Location: </strong></p>
                        <p t-field="o.destination_location_id"/>
                    </div>
                    <div  class="col-auto col-6 mw-100 mb-2">
                        <p class="m-0"><strong>Scheduled Date: </strong></p>
                        <p t-field="o.scheduled_date"/>
                        <p class="m-0"><strong>Expiry  Date: </strong></p>
                        <p t-field="o.expiry_date"/>
                    </div>
                </div>
                <table class="table" >
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Unit Of Measure</th>
                            <th>Source Location</th>
                            <th>Destination Location</th>
                            <th>Scheduled Date</th>
                            <th>Operation</th>
                        </tr>
                    </thead>
                    <tbody>
<!--                        <t t-set="offers" t-value="property.mapped('offer_ids')"/>-->
                        <tr t-foreach='o.product_line_ids' t-as='line'>
                            <td><span t-esc="line.product_id.name"/></td>
                            <td><span t-esc="line.qty"/></td>
                            <td><span t-esc="line.uom.name"/></td>
                            <td><span t-field="line.source_location_id"/></td>
                            <td><span t-field="line.destination_location_id"/></td>
                            <td><span t-field="line.scheduled_date"/></td>
                            <td><span t-field="o.operations"/></td>
                        </tr>
<!--                        <tr >-->
<!--                            <td>-->
<!--                                <span t-field="o.product_id"/>-->
<!--                            </td>-->
<!--                        </tr>-->
                    </tbody>
                </table>

            </div>

        </t>
    </template>

    <template id="report_internal_transfer_request">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="equip3_inventory_operation.report_internal_transfer_request_document"/>
            </t>
        </t>
    </template>

</odoo>
