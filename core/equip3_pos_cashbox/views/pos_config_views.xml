<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record id="pos_config_retail_view_form_inherit" model="ir.ui.view">
        <field name="name">pos.config.retail</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="equip3_pos_general.pos_config_retail"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='validate_coupon']" position="after">
                <field name="is_cash_management_with_validation"/>
                <!-- <field name="is_difference_value_opening_control_validation" 
                    attrs="{'invisible' : [('bnk_cash_control', '=', False)]}"/> -->
            </xpath>
            <xpath expr="//div[hasclass('setting_box_cash_control')]" position="inside">
                <div class="o_setting_left_pane mt8">
                </div>
                <div class="o_setting_right_pane mt8">
                    <button name="action_show_cashbox_history" type="object" class="btn btn-link btn-lg">
                        <b>Cashbox History</b>
                    </button>
                </div>
            </xpath>
       	</field>
    </record>


    <record id="pos_config_view_form_inherit" model="ir.ui.view">
        <field name="name">pos.config.view.form</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='iface_tipproduct']" position="before">

                <div class="col-12 col-lg-6 o_setting_box"
                    attrs="{'invisible' : [('bnk_cash_control', '=', False)]}"
                    id="cashbox_payment_method_id">

                    <div class="o_setting_left_pane mt8 "></div>
                    <div class="o_setting_right_pane mt8 ml-0">
                        <label for="cashbox_payment_method_id" string="Cashbox Payment Method"/>
                        <div class="text-muted">
                            <span>Default payment method for cashbox transaction</span>
                        </div>
                        <div class="content-group">
                            <field name="cashbox_payment_method_id" attrs="{'required': [('bnk_cash_control','=',True)]}"/>
                        </div>
                    </div>

                </div>
            </xpath>
        </field>
    </record>

    

</odoo>