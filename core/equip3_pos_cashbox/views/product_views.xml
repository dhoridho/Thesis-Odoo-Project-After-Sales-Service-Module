<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.form.view.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="equip3_pos_masterdata.equip3_pos_masterdata_product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_time']" position="after">
                <field name="is_for_cash_management" attrs="{'invisible': [('type', '!=', 'service')]}"/>
            </xpath> 
        </field>
    </record>

</odoo>