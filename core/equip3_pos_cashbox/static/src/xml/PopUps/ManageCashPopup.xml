<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="ManageCashPopup" owl="1">
        <div role="dialog" class="modal-dialog">
            <div class="popup popup-confirm manage-cash-popup">
                <header class="title drag-handle">
                    <span>Manage Cash</span>
                </header>
                <main class="body">
                    <div class="manage-cash-containter">
                        <div class="manage-cash-group">
                            <label for="manage-cash-action">Action</label>
                            <div class="manage-cash-form">
                                <select 
                                    required="1"
                                    class="form-control"
                                    id="manage-cash-action" 
                                    name="manage-cash-action"
                                    t-model="state.action">
                                    <option value="in">Put Money In</option>
                                    <option value="out">Take Money Out</option>
                                </select>
                            </div>
                        </div>

                        <div class="manage-cash-group">
                            <label for="manage-cash-product_id">Product Service</label>
                            <div class="manage-cash-form">
                                <select 
                                    required="1"
                                    class="form-control"
                                    id="manage-cash-product_id" 
                                    name="manage-cash-product_id"
                                    t-model="state.product_id">
                                    <t t-foreach="getProductServices()" t-as="product">
                                        <option t-att-value="product.id"><t t-esc="product.name"/></option>
                                    </t>
                                </select>
                            </div>
                        </div>

                        <div class="manage-cash-group">
                            <label for="manage-cash-amount">Amount</label>
                            <div class="manage-cash-form">
                                <input 
                                    required="1"
                                    class="form-control"
                                    id="manage-cash-amount" 
                                    name="manage-cash-amount"
                                    t-model="state.amount" 
                                    type="number"/>
                            </div>
                        </div>

                        <div class="manage-cash-group">
                            <label for="manage-cash-reason">Reason</label>
                            <div class="manage-cash-form">
                                <textarea 
                                    id="manage-cash-reason" 
                                    name="manage-cash-reason"
                                    t-model="state.reason" 
                                    rows="4"></textarea>
                            </div>
                        </div>
                    </div>
                </main>
                <footer class="footer">
                    <div class="button cancel" t-on-click="cancel">
                        Cancel
                    </div>
                    <div class="button confirm" t-on-click="confirm">
                        Create
                    </div>
                </footer>
            </div>
        </div>
    </t>

</templates>

