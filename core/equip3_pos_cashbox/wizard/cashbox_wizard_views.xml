<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	
    <record id="account_cashbox_wizard_form" model="ir.ui.view">
        <field name="name">aaccount.cashbox.wizard.form</field>
        <field name="model">account.cashbox.wizard</field>
        <field name="arch" type="xml">
            <form>
                <field name="is_return" invisible="1"/>
                <field name="is_closing_wizard" invisible="1"/>
                <field name="line_ids">
                    <tree string="Cashbox balance" editable="top">
                        <field name="coin_value"/> 
                        <field name="number"/>
                        <field name="subtotal"/>
                    </tree>
                </field>
                <group>
                    <group>
                        <field name="amount_total"/>
                    </group>
                </group>
                <footer>
                    <button string="Save" name="action_close_wizard" type="object" class="oe_highlight"
                        attrs="{'invisible': [('is_return','=', True)]}"/>

                    <button string="Save" title="Save Opening" name="action_close_and_return" type="object" class="oe_highlight"
                        attrs="{'invisible': ['|',('is_return','=', False),('is_closing_wizard','!=',False)]}"/>
                    <button string="Save" title="Save Closing" name="action_closing_cash_control" type="object" class="oe_highlight"
                        confirm="Are you sure want to Confirm and Save this Cash Control?"
                        attrs="{'invisible': ['|',('is_return','=', False),('is_closing_wizard','!=',True)]}"/>

                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="account_cashbox_wizard_validate_form" model="ir.ui.view">
        <field name="name">aaccount.cashbox.wizard.validate.form</field>
        <field name="model">account.cashbox.wizard.validate</field>
        <field name="arch" type="xml">
            <form>
                <div>
                    Please input manager PIN to validate different cash opening amount
                </div>
                <group>
                    <group>
                        <field name="pin" required="True" password="True"/>
                    </group>
                </group>
                <footer>
                    <button string="Save" name="save" type="object" class="oe_highlight"/>
                    <button string="Discard" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
        
</odoo>