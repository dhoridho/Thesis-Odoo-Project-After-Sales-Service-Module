<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--	Wizard for Split Purchase Agreement-->
	<record id="wizard_split_purchase_agreement_form" model="ir.ui.view">
		<field name="name">split.purchase.agreement</field>
		<field name="model">wizard.purchase.agreement</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<field name="agreement_id" invisible="1"/>
					<field name="rfq_id" invisible="1"/>
					<field name="temp_current_vendors" widget="many2many_tags" invisible="1"/>
					<field name="partner_ids" widget="many2many_tags" required="True"/>
					<field name="split_table" widget="radio" required="True" invisible="1"/>
				</group>
				<footer>
					<button string="Submit" type="object" name="submit_split" class="oe_highlight"/>
					<button string="Cancel" class="oe_link" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>
</odoo>