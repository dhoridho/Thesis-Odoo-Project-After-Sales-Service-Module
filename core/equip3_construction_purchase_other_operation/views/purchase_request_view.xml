<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_purchase_request_form_purchase_request_inherited" model="ir.ui.view">
            <field name="name">view.purchase.request.form.purchase.request.inherited</field>
            <field name="model">purchase.request</field>
            <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[2]" position="attributes">
                    <attribute name="attrs">{'invisible':['|', '|', '|', ('state','!=','purchase_request'), ('is_purchase_tender','=', False), ('purchase_req_state','not in', ('pending','in_progress')), ('is_subcontracting','=',True)]}</attribute>
                </xpath>
                <xpath expr="//button[2]" position="after">
                    <button string="Create Purchase Agreement" name="create_purchase_agreement" type="object" class="oe_highlight" attrs="{'invisible':['|', '|', '|', ('state','!=','purchase_request'), ('is_purchase_tender','=', False), ('purchase_req_state','not in', ('pending','in_progress')), ('is_subcontracting','!=',True)]}"/>
                </xpath>
            </field>
        </record>
        <record id="view_purchase_request_form_purchase_request_inherited_subcon" model="ir.ui.view">
            <field name="name">view.purchase.request.form.purchase.request.inherited.subcon</field>
            <field name="model">purchase.request</field>
            <field name="inherit_id" ref="equip3_construction_purchase_operation.view_purchase_request_form_purchase_request_inherited_2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='rfq_variable_id']" position="after">
                    <field name="pt_variable_id" optional='hide'/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
