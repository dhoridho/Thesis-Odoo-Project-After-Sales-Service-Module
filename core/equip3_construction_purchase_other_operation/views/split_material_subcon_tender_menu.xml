<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Add sub menu Purchase Tender-->
        <!-- action -->
        <record id="purchase_tender_menu_order_action" model="ir.actions.act_window">
            <field name="name">Purchase Tender</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.agreement</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_material_orders', '=', True)]</field>
            <field name="context">{'orders': 1, 'search_default_project': 1, 'default_is_material_orders': 1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to Create New Purchase Tender.
                </p>
            </field>
        </record>

        <record id="purchase_tender_lines_menu_order_action" model="ir.actions.act_window">
            <field name="name">Analyze Multiple Tender</field>
            <field name="res_model">purchase.order.line</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,pivot,form</field>
            <field name="domain">[('state','not in',['cancel']),('order_id.state','in',['draft']), ('is_orders', '=', True)]</field>
            <field name="context">{'orders': 1}</field>
            <field name="view_id" ref="sh_po_tender_management.sh_bidline_tree_view" />
            <field name="search_view_id" ref="sh_po_tender_management.sh_po_bidline_search_view" />
        </record>

        <!-- menu -->
        <menuitem id="split_purchase_tenders_menu"
              name="Purchase Tenders"
              parent="equip3_construction_purchase_operation.purchase_orders_menu"
              sequence="2"/>

        <menuitem
            id="purchase_tender_menu_orders"
            name="Purchase Tender"
            action="purchase_tender_menu_order_action"
            parent="split_purchase_tenders_menu"
            sequence="1"/>

        <menuitem
            id="purchase_tender_lines_menu_orders"
            name="Analyze Multiple Tender"
            action="purchase_tender_lines_menu_order_action"
            parent="split_purchase_tenders_menu"
            sequence="4"/>
    </data>
</odoo>
