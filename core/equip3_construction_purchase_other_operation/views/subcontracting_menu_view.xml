<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- ACTION -->
        <record id="equip3_purchase_other_operation.product_analyze_multiple_tenders" model="ir.actions.act_window">
            <field name="name">Analyze Multiple Agreement</field>
        </record>
        <record id="equip3_purchase_other_operation.product_purchase_tender" model="ir.actions.act_window">
            <field name="name">Purchase Agreement</field>
            <field name="domain">[('is_subcontracting', '=', True)]</field>
            <field name="context">{'services_good': 1, 'default_is_services_orders' : True, 'default_set_single_delivery_date': True, 'default_set_single_delivery_destination': True, 'search_default_project': 1 , 'default_is_subcontracting': 1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to Create New Purchase Agreement.
                </p>
            </field>
        </record>

        <!-- SUBMENU -->
        <menuitem id="equip3_purchase_other_operation.menu_purchase_tender" 
            name="Purchase Agreement"
            parent="equip3_purchase_other_operation.menu_purchase_tenders_main" 
            sequence="1"/>
        <menuitem id="equip3_purchase_other_operation.menu_purchase_analyze_multiple_tenders" 
            name="Analyze Multiple Agreement"
            parent="equip3_purchase_other_operation.menu_purchase_tenders_main" 
            sequence="4"/>

        <!-- MENU -->
        <!-- Change string menu Services Order to Subcontracting -->
        <menuitem id="equip3_purchase_operation.menu_purchase_services_goods" 
            name="Subcontracting" 
            parent="purchase.menu_purchase_root" 
            sequence="3"/>
    </data>
</odoo>
