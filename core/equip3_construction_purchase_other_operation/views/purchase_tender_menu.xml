<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- Is Goods Order -->
        <record id="equip3_purchase_other_operation.rfq_tender_submission_goods_action" model="ir.actions.act_window">
            <field name="domain">[('dp', '=', False),('state', 'in', ['draft', 'sent', 'cancel', 'waiting_for_approve', 'reject', 'rfq_approved', 'retreat', 'request_for_amendment']), ('po', '=', False), ('is_goods_orders', '=', True),('agreement_id','!=',False),('tender_scope','!=','open_tender')]</field>
            <field name="context">
            {
                'goods_order': 1, 
                'default_is_goods_orders': True,
                'search_default_project' : 1
            }
            </field>
        </record>

        <record id="equip3_purchase_other_operation.rfq_open_tender_submission_goods_action" model="ir.actions.act_window">
            <field name="domain">[('dp', '=', False),('state', 'in', ['draft', 'sent', 'cancel', 'waiting_for_approve', 'reject', 'rfq_approved', 'retreat']), ('po', '=', False), ('is_goods_orders', '=', True),('agreement_id','!=',False),('tender_scope','=','open_tender')]</field>
            <field name="context">
            {
                'goods_order': 1, 
                'default_is_goods_orders': True,
                'search_default_project' : 1
            }
            </field>
        </record>
        
        <record id="sh_po_tender_management.sh_purchase_agreement_action" model="ir.actions.act_window">
            <field name="context">{'goods_order': 1, 'default_is_goods_orders' : True, 'default_set_single_delivery_date' : True, 'default_set_single_delivery_destination' : True, 'search_default_project' : 1}</field>
            <field name="domain">[('is_goods_orders', '=', True)]</field>
        </record>

        <record id="sh_po_tender_management.action_po_bidline_action" model="ir.actions.act_window">
            <field name="context">{'search_default_hide_cancelled_lines':1,'search_default_tender':1,'search_default_groupby_product':1, 'goods_order': 1, 'default_is_goods_orders' : True}</field>
            <field name="domain">[('state','not in',['cancel']),('order_id.state','in',['draft']), ('is_goods_orders', '=', True), ('agreement_id', '!=', False)]</field>
        </record>

        <!-- Is Service Order -->
        <record id="equip3_purchase_other_operation.rfq_tender_submission_services_action" model="ir.actions.act_window">
            <field name="domain">[('dp', '=', False),('state', 'in', ['draft', 'sent', 'cancel', 'waiting_for_approve', 'reject', 'rfq_approved', 'request_for_amendment']), 
                                ('po', '=', False), ('is_services_orders', '=', True),('agreement_id','!=',False),('tender_scope','!=','open_tender')]</field>
            <field name="context">
            {
                'services_good': 1,
                'default_is_service': True,
                'default_is_services_orders': True,
                'default_is_subcontracting': True,
                'search_default_project' : 1
            }
            </field>
        </record>

        <record id="equip3_purchase_other_operation.rfq_open_tender_submission_services_action" model="ir.actions.act_window">
            <field name="domain">[('dp', '=', False),('state', 'in', ['draft', 'sent', 'cancel', 'waiting_for_approve', 'reject', 'rfq_approved']), ('po', '=', False), 
                                ('is_services_orders', '=', True),('agreement_id','!=',False),('tender_scope','=','open_tender')]</field>
            <field name="context">
            {
                'services_good': 1,
                'default_is_service': True,
                'default_is_services_orders': True,
                'default_is_subcontracting': True,
                'search_default_project' : 1
            }
            </field>
        </record>

