<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchase_order_subcon">
        <t t-call="web.html_container">
<!--            <t t-set="report_name" t-value="{'report_purchase_custom': 'general_template.report_purchase_main',                                         'report_purchase_custom_creative': 'general_template.report_purchase_creative_main',                                         'report_purchase_custom_elegant': 'general_template.report_purchase_elegant_main',                                         'report_purchase_custom_professional': 'general_template.report_purchase_professional_main',                                         'report_purchase_custom_exclusive': 'general_template.report_purchase_exclusive_main',                                         'report_purchase_custom_advanced': 'general_template.report_purchase_advanced_main',                 'report_purchase_custom_incredible': 'general_template.report_purchase_incredible_main',                 'report_purchase_custom_innovative': 'general_template.report_purchase_innovative_main',}"/>-->
            <t t-as="o" t-foreach="docs">
<!--                <t t-set="r_name" t-value="o.report_template_id and o.report_template_id.report_name or o.partner_id and o.partner_id.report_po_template_id and o.partner_id.report_po_template_id.report_name or o.company_id and o.company_id.report_po_template_id and o.company_id.report_po_template_id.report_name"/>-->
<!--                <t t-set="real_name" t-value="r_name.split('.')"/>-->
                <t t-if="o.report_template_id or o.partner_id and o.partner_id.report_po_template_id or o.company_id and o.company_id.report_po_template_id">
                    <!-- <t t-call="#{report_name.get(real_name[1], 'general_template.report_purchase_advanced_main')}" t-lang="o.partner_id.lang"/>-->
                    <t t-call="general_template.purchase_exclusive_external_layout">
                        <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
                        <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color"/>
                        <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color"/>
                        <t t-set="company_color" t-value="o.company_id and o.company_id.company_color"/>
                        <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color"/>
                        <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color"/>
                        <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color"/>
                        <t t-set="text_color" t-value="o.company_id and o.company_id.text_color"/>
                        <div class="page" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                            <div class="oe_structure"/>
                            <t t-call="general_template.templates_watermark"/>
                            <br/>
                            <div width="100%">
                                <div  style="padding:0px 20px 20px 20px; margin:0; background:#fff; line-height:20px;" width="100%">
                                    <table t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:12px; position: static; margin-left: 30px'" >
										<style>
											tr {height: 25px;font-weight: normal;}
										</style>
										<tr>
											<td style="min-width: 50px;" >Project</td>
                                			<td style="width: 50px; text-align: center;">:</td>
											<td style="width: 300px;">
												<span t-field="o.project.name" />
											</td>

											<td style="width: 10px; text-align: center;"> </td>
											<td style="min-width: 50px;">Category</td>
                                			<td style="width: 50px; text-align: center;">:</td>
											<td>
												<span t-field="o.sub_contracting" />
											</td>
										</tr>
										<tr>
											<td style="min-width: 50px;">Planned Start Date</td>
                                			<td style="width: 50px; text-align: center;">:</td>
											<td>
												<span t-field="o.start_date" />
											</td>

											<td style="width: 10px; text-align: center;"></td>
											<td style="min-width: 50px;">Down Payment</td>
											<td style="width: 50px; text-align: center;">:</td>
											<td>
												<span t-field="o.down_payment"/>%
											</td>
										</tr>
										<tr>
											<td style="min-width: 50px;">Planned End Date</td>
                                			<td style="width: 50px; text-align: center;">:</td>
											<td>
												<span t-field="o.end_date" />
											</td>

											<td style="width: 10px; text-align: center;"></td>
											<td style="min-width: 50px;">Retention 1</td>
											<td style="width: 50px; text-align: center;">:</td>
											<td>
												<span t-field="o.retention_1" />%
											</td>
										</tr>
										<tr>
											<td style="min-width: 50px;">Location</td>
                                			<td style="width: 50px; text-align: center;">:</td>
											<td>
												<span style="max-width: 300px;" t-esc="o.report_street" />
											</td>

											<td style="width: 10px; text-align: center;"></td>
											<td style="min-width: 50px;">Retention 1 Term</td>
											<td style="width: 50px; text-align: center;">:</td>
											<td>
												<span t-field="o.retention_term_1.name" />
											</td>
										</tr>
										<tr>
											<td></td>
                                			<td style="width: 50px; text-align: center;"></td>
											<td>
												<span t-field="o.report_country" />
											</td>

											<td style="width: 10px; text-align: center;"></td>
											<td style="min-width: 50px;">Retention 2</td>
											<td style="width: 50px; text-align: center;">:</td>
											<td>
												<span t-field="o.retention_2" />%
											</td>
										</tr>
											<t t-if="o.sub_contracting == 'addendum'">
												<td style="min-width: 50px;">Main Contract</td>
												<td style="width: 50px; text-align: center;">:</td>
												<td>
													<span t-field="o.main_po_reference.name" />
												</td>
											</t>
											<t t-if="o.sub_contracting == 'main_contract'">
												<td></td>
												<td style="width: 50px; text-align: center;"></td>
												<td>

												</td>
											</t>

											<td style="width: 10px; text-align: center;"></td>
											<td style="min-width: 50px;">Retention 2 Term</td>
											<td style="width: 50px; text-align: center;">:</td>
											<td>
												<span t-field="o.retention_term_2.name" />
											</td>
										<tr>
                                            <td style="min-width: 50px;">Cost Sheet</td>
                                            <td style="width: 50px; text-align: center;">:</td>
                                            <td>
                                                <span t-field="o.cost_sheet.name" />
                                            </td>

											<td style="width: 10px; text-align: center;"></td>
											<td style="min-width: 50px;">Taxes</td>
											<td style="width: 50px; text-align: center;">:</td>
											<td>
												<span t-field="o.report_taxes" />
											</td>
										</tr>
										<tr>
											<td></td>
                                			<td style="width: 50px; text-align: center;"></td>
											<td>
											</td>

<!--											<td style="width: 10px; text-align: center;"></td>-->
<!--											<td style="min-width: 50px;">Payment Term</td>-->
<!--											<td style="width: 50px; text-align: center;">:</td>-->
<!--											<td>-->
<!--												<span t-field="o.payment_term_id.name" />-->
<!--											</td>-->
										</tr>
									</table>
                                    <div>
                                        <p  t-attf-style="padding:20px 0px 0px 0px; height:5px; border-bottom: 1px solid #{theme_color or '#000000'};"/>
                                    </div>
                                    <div align="left"  style="color:#4D4D4F; padding: 0px 0px 15px 0px;" valign="top">
                                        <table border="0" cellpadding="0" cellspacing="0" t-attf-style="color:#fff; text-transform:capitalize; border: 1px solid #{theme_color or '#000000'};" width="100%">
                                            <tr t-attf-style="color: #{theme_text_color or '#000000'}; background-color: #{theme_color or '#000000'};">
                                                <td t-attf-style="padding:9px 15px; font-weight:bold;">
                                                    <span t-if="o.state not in ['draft']">Purchase Order Confirmation # </span>
                                                    <span t-if="o.state in ['draft']">Request for Quotation # </span>
                                                    <br/>
                                                    <span t-field="o.name"/>
                                                </td>
                                                <td colspan="2" t-attf-style="background-color:#f2f2f2; height:4px;"/>
                                                <td/>
                                                <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                                    <strong t-if="o.state not in ['draft']">Date Ordered:</strong>
                                                    <strong t-if="o.state in ['draft']">Quotation Date:</strong>
                                                    <br/>
                                                    <span t-field="o.date_order"/>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div>
                                        <p  t-attf-style="padding:5px 0px 0px 0px; height:5px; border-bottom: 1px solid #{theme_color or '#000000'};"/>
                                    </div>
                                    <div>
                                        <t t-call="equip3_construction_purchase_other_operation.report_purchase_order_subcon_line"/>
                                    </div>
                                    <div>
                                        <t t-call="equip3_construction_purchase_other_operation.report_purchase_order_subcon_line_subtotal"/>
                                    </div>
<!--                                    <div t-attf-style="border-bottom:1px solid #{'#959595'}; padding:0px">-->
<!--                                        <t t-call="general_template.template_total_amount_word"/>-->
<!--                                    </div>-->
                                    <div t-attf-style="color: #{text_color or '#000000'}; padding-top:5px; width:100%;" t-if="o.notes and o.company_id.is_show_notes == True">
                                        <p t-field="o.notes"/>
                                    </div>
                                    <div align="right" t-attf-style="color: #{text_color or '#000000'};">
                                        <t t-call="general_template.report_signature"/>
                                    </div>
                                </div>
                            </div>
                            <div class="oe_structure"/>
                        </div>
                        <t t-call="general_template.report_barcode"/>
                    </t>
                </t>
            </t>
        </t>
    </template>
    <template id="report_purchase_order_subcon_line">
        <table BORDERCOLOR="#{theme_color or '#000000'}" border="1" cellpadding="0" cellspacing="0" class="table table-bordered" style="border:0.5px solid #ccc;  border-collapse: collapse; text-transform:capitalize; padding:15px;border-bottom:1px solid #ccc;" width="100%">
            <thead>
                <tr t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'};">
                    <td align="center" t-attf-style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="8%">NO.</td>
                    <td align="center" t-attf-style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="22%">Project Scope</td>
                    <td align="center" t-attf-style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="15%">Section</td>
                    <td align="center" t-attf-style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="22%">Job Subcon</td>
                    <td align="center" t-attf-style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="15%">Quantity</td>
                    <td align="center" t-attf-style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="15%">UOM</td>
                    <td align="center" t-attf-style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="20%">Unit Price</td>
                    <td align="center" t-attf-style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="20%">Subtotal</td>
                </tr>
            </thead>
            <tbody>
                <t t-as="l" t-foreach="o.variable_line_ids">
                    <t t-if="l_odd">
                        <t t-set="ol_color" t-value="o.company_id.even_party_color"/>
                    </t>
                    <t t-if="l_even">
                        <t t-set="ol_color" t-value="o.company_id.odd_party_color"/>
                    </t>
                    <tr t-att-style="'page-break-inside: avoid !important;background-color: ' + ol_color + '; color: ' + text_color">
                        <td class="text-left" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                            <span t-esc="l_index+1"/>
                        </td>
                        <td class="text-left" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                            <span t-field="l.project_scope.name"/>
                        </td>
                        <td class="text-left" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                            <span t-field="l.section.name"/>
                        </td>
                        <td class="text-left" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                            <span t-field="l.variable.name"/>
                        </td>
                        <td class="text-center" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                            <span t-field="l.quantity"/>
                        </td>
                        <td class="text-center" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                            <span t-field="l.uom.name"/>
                        </td>
                        <td class="text-right" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                            <span t-att-style="'font-weight: normal'" t-field="o.currency_id.symbol" />
                            <span t-att-style="'font-weight: normal'" t-esc="'{:,.2f}'.format(l.sub_total)"/>
                        </td>
                        <td class="text-right" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                            <span t-att-style="'font-weight: normal'" t-field="o.currency_id.symbol" />
                            <span t-att-style="'font-weight: normal'" t-esc="'{:,.2f}'.format(l.total)"/>
                        </td>
                    </tr>
                </t>
            </tbody>
        </table>
    </template>

    <template id="report_purchase_order_subcon_line_subtotal">
        <table class="pull-right" style="font-weight:bold;width:40%; text-transform:capitalize; " t-att-style="'color: '+ text_color">
            <tr>
                <td class="left" colspan="2" t-att-style="'padding:9px 10px 7px 0px;'">Total</td>
                <td align="right" tyle="padding:9px 0px 7px 10px;">
                    <span t-field="o.total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                </td>
            </tr>
            <tr>
                <td colspan="3" style="border-bottom:1px solid #959595"/>
            </tr>
            <tr t-att-style="'padding:9px 10px 7px 0px;'">
                <td class="left" colspan="2" t-att-style="'padding:9px 10px 7px 0px;'">
                    <span>Taxes</span>
                </td>
                <td align="right" t-att-style="'padding:9px 0px 7px 10px;'">
                    <span t-field="o.tax_amount" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                </td>
            </tr>
            <tr>
                <td colspan="3" style="border-bottom:1px solid #959595"/>
            </tr>
            <tr>
                <td class="left" colspan="2" t-att-style="'padding:9px 10px 7px 0px; text-transform:uppercase;'">total</td>
                <td align="right" style="padding:9px 0px 7px 10px; text-transform:uppercase; ">
                    <span t-field="o.total_all" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                </td>
            </tr>
        </table>
    </template>

</odoo>