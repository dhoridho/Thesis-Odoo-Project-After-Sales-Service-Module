<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="equi3_hide_administrator_users_inherit" model="ir.ui.view">
        <field name="name">Res Users View Hide Administrator</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_title')]//field[@name='partner_id']" position="after">
                <field name="is_member_superuser" invisible="1"/>
                <field name="is_administrator" attrs="{'invisible': [('is_member_superuser', '=', False)]}" groups="equip3_hide_administrator_user.group_superuser"/>
            </xpath>
        </field>
    </record>
</odoo>
