<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="delivery_acknowledgement_email_template" model="mail.template">
        <field name="name">Delivery Acknowledgement Mail</field>
        <field name="model_id" ref="pragmatic_delivery_acknowledgement.model_picking_order"/>
        <field name="subject">Delivery Acknowledgement Code for Order No ${object.sale_order.name or '' }</field>
        <field name="email_from">${object.sale_order.user_id.email or ''}</field>
        <field name="email_to">${object.sale_order.partner_id.email}</field>
        <field name="body_html"></field>
        <field name="auto_delete" eval="True"/>
    </record>
</odoo>
