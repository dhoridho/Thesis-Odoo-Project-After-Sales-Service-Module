<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">

    <t t-name="SetuShowForcastingFormula">
        <div>
            <div style="width:fit-content;">

                    <div style="font-size:20px;float:left;margin-top:10px;">
                        <strong id="title"><t t-esc="title"/></strong>
                    </div>

                <div>
                        <a role="button" tabindex="0" class="js_show_forcasting_formula fa fa-info-circle"
                           style="margin-left:8px; margin-top:20px;color:#347f84;width:20px;" aria-label="Info" title="Info"
                           data-toggle="tooltip"/>
                </div>

            </div>
        </div>
    </t>

    <t t-name="SetuShowForcastingFormulaPopOver">
        <div>

<!--            <t t-set="con" t-value="content"/>-->
            <t t-debug="pdb"/>
            <t t-foreach="content" t-as="item">
                <t t-debug="pdb"/>
             <t t-esc="item"/><br/>
            </t>
<!--            <t t-esc="content"/>-->
        </div>
    </t>

</templates>
