        <field name="res_model">purchase.flow</field>
        <field name="view_mode">form</field>
    </record>

    <record id="purchase_configuration_flow_action_client" model="ir.actions.client">
        <field name="name">Purchase Flow</field>
        <field name="tag">purchase_configuration_flow_tag</field>
    </record>

    <menuitem
