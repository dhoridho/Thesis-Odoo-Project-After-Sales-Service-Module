<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="CRMdashboard">
         <div class="oh_dashboards">
            <div class="container-fluid my-5 o_crm_insight"/>
        </div>
    </t>
    <t t-name="LoginUser">
        <section class="dashboard_main_section" id="main_section_login">
            <div class="row">
                <div class="col-sm-12 mb-4">
                    <div class="row">
                        <div class="col-12 col-sm-12 col-md-8">
                            <h2 class="section-header">CRM Insight</h2>
                        </div>
                    </div>
                    <hr/>
                </div>
            </div>
        </section>
    </t>
    <t t-name="Managercrm">
        <section class="dashboard_main_section" id="main_section_manager">
            <div class="crm_dash_cards row">
                <div class="row col-md-12 col-lg-8">
                    <div class="col-sm-8 col-md-6">
                        <div class="dashboard-card card-shadow exp_revenue_this_month">
                            <div class="dashboard-card__icon-container bg-green-light d-flex justify-content-center align-items-center">
<!--                                <i class="fa fa-dollar text-mauve"/>-->
                                <img src="/equip3_crm_insight/static/img/closing_month.png" style="padding: 0px; margin: 0px; height: auto; width: 60px;" alt="closing_this_month"/>
                            </div>
                            <div class="dashboard-card__details">
                                <h4><span>This Month</span></h4>
                                <h3>
                                    <span>
                                        <b><t t-esc="widget.monthly_goals[2]"/><t t-esc="widget.monthly_goals[0]"/></b>
                                    </span>
                                </h3>
                                <h4><span>
                                    <t t-if="widget.monthly_goals[5] > 0">
                                        <i class="fa fa-arrow-up" style="color: green"/>
                                    </t>
                                    <t t-if="widget.monthly_goals[5] &lt; 0">
                                        <i class="fa fa-arrow-down" style="color: red"/>
                                    </t>
                                    <t t-esc="widget.monthly_goals[5]"/>% than last month</span></h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-8 col-md-6">
                        <div class="dashboard-card card-shadow exp_revenue_this_quarter">
                            <div class="dashboard-card__icon-container bg-pink-light d-flex justify-content-center align-items-center">
                                <img src="/equip3_crm_insight/static/img/closing_quarter.png" style="padding: 0px; margin: 0px; height: auto; width: 60px;" alt="closing_this_quarter"/>
                            </div>
                            <div class="dashboard-card__details">
                                <h4><span>This Quarter</span></h4>
                                <h3>
                                    <span>
                                        <b><t t-esc="widget.monthly_goals[2]"/><t t-esc="widget.monthly_goals[3]"/></b>
                                    </span>
                                </h3>
                                <h4><span>
                                    <t t-if="widget.monthly_goals[6] > 0">
                                        <i class="fa fa-arrow-up" style="color: green"/>
                                    </t>
                                    <t t-if="widget.monthly_goals[6] &lt; 0">
                                        <i class="fa fa-arrow-down" style="color: red"/>
                                    </t>
                                    <t t-esc="widget.monthly_goals[6]"/>% than last quarter</span></h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-4">
                        <div class="chart-container card-shadow card-white-red center-container">
                            <h3><b>Generate Account</b></h3>
                            <div class="dashboard-card_80_icon-container d-flex justify-content-center align-items-center" style="height: 80px; width: 80px">
<!--                                <i class="fa fa-usd text-mauve"/>-->
                                <img src="/equip3_crm_insight/static/img/generate_account.png" style="padding: 0px; margin: 0px; height: auto; width: 60px;" alt="generate_account"/>
                            </div>
                            <div class="dashboard-card__details">
                                <span class="row-dashboard">
                                    <div class="col-sm-12 cols-md-6">
                                        <h3><b><t t-esc="widget.generate_account[0]"/></b></h3>
                                        <h4>
                                            <span>
                                                <t t-if="widget.generate_account[4] > 0">
                                                    <i class="fa fa-arrow-up" style="color: green"/>
                                                </t>
                                                <t t-if="widget.generate_account[4] &lt; 0">
                                                    <i class="fa fa-arrow-down" style="color: red"/>
                                                </t>
                                                <t t-esc="widget.generate_account[4]"/>%
                                            </span><br/>
                                            This Month
                                        </h4>
                                    </div>
                                    <div class="col-sm-12 cols-md-6">
                                        <h3><b><t t-esc="widget.generate_account[2]"/></b></h3>
                                        <h4>
                                            <span>
                                                <t t-if="widget.generate_account[5] > 0">
                                                    <i class="fa fa-arrow-up" style="color: green"/>
                                                </t>
                                                <t t-if="widget.generate_account[5] &lt; 0">
                                                    <i class="fa fa-arrow-down" style="color: red"/>
                                                </t>
                                                <t t-esc="widget.generate_account[5]"/>%
                                            </span><br/>
                                            This Quarter
                                        </h4>
                                    </div>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-4">
                        <div class="chart-container card-shadow card-white-orange center-container">
                            <h3><b>Opportunities</b></h3>
                            <div class="dashboard-card_80_icon-container d-flex justify-content-center align-items-center">
                                <img src="/equip3_crm_insight/static/img/opportunity.png" style="padding: 0px; margin: 0px; height: auto; width: 60px;" alt="opportunities"/>
                            </div>
                            <div class="dashboard-card__details">
                                <span class="row-dashboard">
                                    <div class="col-sm-12 cols-md-6">
                                        <h3><b><t t-esc="widget.opportunity[0]"/></b></h3><br/>
                                        <h4>Won Opportunity</h4>
                                    </div>
                                    <div class="col-sm-12 cols-md-6">
                                        <h3><b><t t-esc="widget.opportunity[1]"/></b></h3><br/>
                                        <h4>Lost Opportunity</h4>
                                    </div>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-4">
                        <div class="chart-container card-shadow card-white-blue center-container">
                            <h3><b>Won Revenue</b></h3>
                            <div class="dashboard-card_80_icon-container d-flex justify-content-center align-items-center">
                                <img src="/equip3_crm_insight/static/img/won_revenue.png" style="padding: 0px; margin: 0px; height: auto; width: 60px;" alt="won_revenue"/>
                            </div>
                            <div class="dashboard-card__details">
                                <span class="row-dashboard">
                                    <div class="col-sm-12 cols-md-6">
                                        <h3><b><t t-esc="widget.won_revenue[0]"/></b></h3>
                                        <h4>
                                            <span>
                                                <t t-if="widget.won_revenue[4] > 0">
                                                    <i class="fa fa-arrow-up" style="color: green"/>
                                                </t>
                                                <t t-if="widget.won_revenue[4] &lt; 0">
                                                    <i class="fa fa-arrow-down" style="color: red"/>
                                                </t>
                                                <t t-esc="widget.won_revenue[4]"/>%
                                            </span><br/>
                                            This Month
                                        </h4>
                                    </div>
                                    <div class="col-sm-12 cols-md-6">
                                        <h3><b><t t-esc="widget.won_revenue[2]"/></b></h3>
                                        <h4>
                                            <span>
                                                <t t-if="widget.won_revenue[5] > 0">
                                                    <i class="fa fa-arrow-up" style="color: green"/>
                                                </t>
                                                <t t-if="widget.won_revenue[5] &lt; 0">
                                                    <i class="fa fa-arrow-down" style="color: red"/>
                                                </t>
                                                <t t-esc="widget.won_revenue[5]"/>%
                                            </span><br/>
                                            This Quarter
                                        </h4>
                                    </div>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row col-md-12 col-lg-4">
                    <div class="chart-container card-shadow exp_revenue" style="background-image: linear-gradient(to right, #82deb5 , #13da81);
">
                        <h2><b>Trending</b></h2>
                        <div class="items-table" style="background-color: transparent!important">
                            <div class="item-container">
                                <div class="item-header">
                                    <div class="item-titles pl-3">
                                        <ul class="mb-2 list-unstyled list-group">
                                            <li>
                                                The most engagement source in this month is from: <t t-esc="widget.trending[0]"/>
                                            </li>
                                        </ul>
                                        <ul class="mb-2 list-unstyled list-group">
                                            <li>
                                                The least engagement source in this month is from: <t t-esc="widget.trending[1]"/>
                                            </li>
                                        </ul>
                                        <ul class="mb-2 list-unstyled list-group">
                                            <li>
                                                Customer Generation in this quarter is: <t t-esc="widget.trending[2]"/>
                                            </li>
                                        </ul>
                                        <ul class="mb-2 list-unstyled list-group">
                                            <li>
                                                Favorite campaign in this quarter is: <t t-esc="widget.trending[3]"/>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-5">
                <div class="revenue_lead_type_div col-12 col-sm-12 col-md-6">
                    <div class="chart-container card-shadow">
                        <div class="graph_canvas">
                            <t t-if="widget.monthly_goals[5] >= 0">
                                <canvas class="revenue_lead_type"/>
                            </t>
                            <t t-else="">
                                <canvas class="lost_reason_graph"/>
                            </t>
                        </div>
                    </div>
                </div>
                <t t-if="widget.monthly_goals[5] >= 0">
                    <div class="top_sources_div col-12 col-sm-12 col-md-6">
                        <div class="chart-container card-shadow">
                            <figure class="highcharts-figure">
                                <div id="top_source" style="height: 300px; width: 100%;"/>
                            </figure>
                        </div>
                    </div>
                </t>
            </div>
            <t t-if="widget.monthly_goals[5] >= 0">
                <div class="row mt-5">
                    <div class="top_team_div col-12 col-sm-12 col-md-6">
                        <div class="chart-container card-shadow">
                            <figure class="highcharts-figure">
                                <div id="top_team" style="height: 300px; width: 100%;"/>
                            </figure>
                        </div>
                    </div>
                </div>
            </t>
        </section>
    </t>
</templates>
