<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- maintenance.repair.order inherit form view -->
        <record id="maintenance_repair_order_form_view_fms_accounting_budget" model="ir.ui.view">
            <field name="name">maintenance.repair.order.inherit.view.form</field>
            <field name="model">maintenance.repair.order</field>
            <field name="inherit_id" ref="equip3_asset_fms_operation.maintenance_repair_order_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='time_post']" position="after">
                    <field name="is_allow_asset_budget" invisible="1"/>
                 </xpath>

                <xpath expr="//field[@name='task_check_list_ids']//tree/field[@name='vehicle_parts_ids']" position="before">
                    <field name="remaining_budget" force_save="1" attrs="{'readonly': [('parent.state_id', '!=', 'draft')], 'column_invisible': [('parent.is_allow_asset_budget', '=', False)]}"/>
                    <field name="used_budget" force_save="1" attrs="{'readonly': [('parent.state_id', '!=', 'draft')], 'column_invisible': [('parent.is_allow_asset_budget', '=', False)]}" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>