<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- maintenance.work.order inherit form view -->
        <record id="maintenance_work_order" model="ir.ui.view">
            <field name="name">maintenance.work.order.inherit.view.form</field>
            <field name="model">maintenance.work.order</field>
            <field name="inherit_id" ref="equip3_asset_fms_operation.maintenance_work_order_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='time_post']" position="after">
                    <field name="is_allow_asset_budget" invisible="1"/>
                 </xpath>
                <xpath expr="//field[@name='analytic_group_id']" position="attributes">
                    <attribute name="attrs">{'readonly': [('state_id', 'in', ['in_progress','pending','done','cancel'])], 'required': [('is_allow_asset_budget', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='task_check_list_ids']//tree/field[@name='asset_description']" position="after">
                    <field name="remaining_budget" force_save="1" attrs="{'readonly': [('parent.state_id', '!=', 'draft')], 'column_invisible': [('parent.is_allow_asset_budget', '=', False)]}"/>
                    <field name="used_budget" force_save="1" attrs="{'readonly': [('parent.state_id', '!=', 'draft')], 'column_invisible': [('parent.is_allow_asset_budget', '=', False)]}" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>