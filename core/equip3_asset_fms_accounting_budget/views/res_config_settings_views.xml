<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_settings" model="ir.ui.view">
            <field name="name">res.config.settings.inherit.view.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="equip3_asset_fms_operation.sh_asset_stock_barcode_mobile_res_config_settings_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@id='implementor_asset_control']//div[last()]" position="after">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_allow_asset_budget_config"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_allow_asset_budget_config"/>
                            <div class="text-muted">
                                    Set Allow Asset Budget.
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>