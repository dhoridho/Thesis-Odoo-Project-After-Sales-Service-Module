<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="acquirer_form_doku_payment" model="ir.ui.view">
            <field name="name">acquirer.doku.form</field>
            <field name="model">payment.acquirer</field>
            <field name="inherit_id" ref="payment.acquirer_form"/>
            <field name="arch" type="xml">
                <xpath expr='//group[@name="acquirer"]' position='after'>
                    <group attrs="{'invisible': [('provider', '!=', 'doku')]}">
                        <field name="doku_sharedkey" attrs="{'required': [('provider', '=', 'doku')]}"/>
                        <field name="doku_mall_id" attrs="{'required': [('provider', '=', 'doku')]}"/>
                        <field name="doku_use_notify"/>
                        <field name="doku_chain_merchant" attrs="{'required': [('provider', '=', 'doku')]}"/>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="transaction_form_doku_payment" model="ir.ui.view">
            <field name="name">transaction.form.doku</field>
            <field name="model">payment.transaction</field>
            <field name="inherit_id" ref="payment.transaction_form"/>
            <field name="arch" type="xml">

            <xpath expr="/form/sheet/group[2]" position="after">
                      <notebook>
                          <page string="Doku Details">
                              <group>
                                    <field name="doku_txn_words"/>
                              </group>
                          </page>
                      </notebook>
              </xpath>
            </field>
        </record>

    </data>
</odoo>
