<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--订单，按承诺日期提醒-->
    <record model="ir.ui.view" id="app_purchase_order_tree">
        <field name="name">app.purchase.order.view</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="before">
                <field name="purchase_alert" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="widget">label_selection</attribute>
                <attribute name="options">{'classes': {'draft': 'primary', 'sent': 'default', 'to approve': 'default',
                    'purchase': 'default', 'done': 'default', 'cancel': 'secondary'}}</attribute>
            </xpath>
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-warning">purchase_alert=='warning'</attribute>
                <attribute name="decoration-danger">purchase_alert=='alert'</attribute>
                <attribute name="bg-danger">purchase_alert=='alert'</attribute>
            </xpath>
        </field>
    </record>
</odoo>
