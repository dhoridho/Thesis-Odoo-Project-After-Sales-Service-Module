<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--报价单，按有效日期提醒-->
    <record model="ir.ui.view" id="app_view_quotation_tree">
        <field name="name">app.sale.quotation.view.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='expected_date']" position="after">
                <field name="validity_date" widget="date"/>
            </xpath>
            <xpath expr="//field[@name='state']" position="before">
                <field name="quotation_alert" optional="hide"/>
                <field name="sale_alert" optional="hide"/>
            </xpath>
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="widget">label_selection</attribute>
                <attribute name="options">{'classes': {'draft': 'primary', 'sent': 'default', 'sale': 'default', 'done': 'default', 'cancel': 'secondary'}}</attribute>
            </xpath>
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-warning">quotation_alert=='warning'</attribute>
                <attribute name="decoration-danger">quotation_alert=='alert'</attribute>
                <attribute name="bg-danger">sale_alert=='alert'</attribute>
            </xpath>
        </field>
    </record>
    <!--订单，按承诺日期提醒-->
    <record model="ir.ui.view" id="app_view_order_tree">
        <field name="name">app.sale.view.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="before">
                <field name="quotation_alert" optional="hide"/>
                <field name="sale_alert" optional="hide"/>
            </xpath>
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="widget">label_selection</attribute>
                <attribute name="options">{'classes': {'draft': 'primary', 'sent': 'default', 'sale': 'default', 'done': 'default', 'cancel': 'secondary'}}</attribute>
            </xpath>
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-warning">sale_alert=='warning'</attribute>
                <attribute name="decoration-danger">sale_alert=='alert'</attribute>
                <attribute name="bg-danger">sale_alert=='alert'</attribute>
            </xpath>
        </field>
    </record>


    <record id="app_view_order_form" model="ir.ui.view">
        <field name="name">app.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!--下单日期，放前-->
            <xpath expr="//field[@name='validity_date']" position="before">
                <xpath expr="//field[@name='date_order']" position="move"/>
            </xpath>
            <!--承诺日期，放前-->
            <xpath expr="//field[@name='validity_date']" position="after">
                <xpath expr="//field[@name='commitment_date']" position="move"/>
            </xpath>
        </field>
    </record>
</odoo>
