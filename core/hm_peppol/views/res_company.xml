<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_company_peppol_inherit" model="ir.ui.view">
            <field name="name">View Company PEPPOL Inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//page[1]" position="after">
                    <page string="Configuration PEPPOL">
                        <group string = 'Parameter'>
                            <field name="base_uri"/>
                            <field name="api_version"/>
                            <field name="api_key"/>
                            <field name="api_secret" password="True"/>
                            <field name="email_to"/>
                        </group>
<!--                        <group>-->
<!--                            <field widget="binary" name="image_loa_form" filename="name_loa_form" placeholder="PEPPOL LOA Form"/>-->
<!--                            <field name="name_loa_form" invisible="1"/>-->
<!--                        </group>-->
                     </page>
                 </xpath>
            </field>
        </record>

    </data>
</odoo>
