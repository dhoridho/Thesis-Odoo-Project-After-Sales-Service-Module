<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_invoice_form_inherit" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='product_uom_id']" position="after">
                    <field name="desc_uom" />
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page name="invoice_peppol" string="Peppol">
                        <group name="invoice_peppol">
                            <field name="peppol_status"/>
                            <field name="client_ref"/>
                            <field name="peppol_info"/>
                            <field name="peppol_msg"/>
                        </group>
                    </page>
                </xpath>

                <button name="button_draft" position="after">
                    <button name="send_invoice_peppol" type="object" string="Send Invoice to PEPPOL" class="oe_highlight" attrs="{'invisible': [('state','!=','posted')]}"/>
                    <button name="get_status_invoice_peppol" type="object" string="Check Status" class="oe_highlight" attrs="{'invisible': [('state','!=','posted')]}"/>
                    <button name="print_test" type="object" string="print test" class="oe_highlight" attrs="{'invisible': [('state','!=','posted')]}"/>
                </button>
            </field>
        </record>

        <menuitem id="menu_peppol_accountx" name="PEPPOL" parent="account.menu_finance" sequence="3"/>

        <menuitem id="menu_peppol_settingx" name="PEPPOL SETTING" parent="base.menu_administration" sequence="3"/>

        <!-- End Of Invoice PEPPOL -->
    </data>
</odoo>
