<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_product_uom_peppol_inherit" model="ir.ui.view">
            <field name="name">View Product UOM PEPPOL Inherit</field>
            <field name="model">uom.uom</field>
            <field name="inherit_id" ref="uom.product_uom_form_view"/>
            <field name="arch" type="xml">
                <field name="uom_type" position="after">
                    <field name="note"/>
                    <field name="note_detail"/>
                </field>
                <xpath expr="//field[@name='rounding']" position="after">
                    <field name="uom_code"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
