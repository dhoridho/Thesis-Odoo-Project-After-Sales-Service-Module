        <record id="view_res_partner_form_inherit" model="ir.ui.view">
            <field name="name">view.res.partner.form.view.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='sales_purchases']/group/group/field[@name='user_id']" position="after">
                    <label for="peppol_id" string="PEPPOL ID"/>
                    <div>
                        <field name="is_peppol" nolabel="1"/>
                        <field name="peppol_id" nolabel="1" style="width:90%;" class="oe_inline" attrs="{'required':[('is_peppol','=',True)],'readonly': [('is_peppol','=',False)]}"/>
                    </div>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="inherit_res_partner_filter_view">
            <field name="name">res.partner.filter.view.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="peppol_id"/>
                </field>
                <filter name="customer" position="after">
                    <filter name="peppol_id" string='PEPPOL' domain="[('is_peppol','=',True)]"/>

                    <group string="Group By PEPPOL">
                        <filter name="peppol_id" string="PEPPOL" context="{'group_by' : 'is_peppol'}"/>
                    </group>

                    <group expand="0" string="Group By">
                        <filter name="peppol_id" string="PEPPOL ID" domain="[('is_peppol','=',True)]" context="{'group_by':'peppol_id'}"/>
                    </group>
                </filter>
            </field>
        </record>
    </data>
</odoo>
