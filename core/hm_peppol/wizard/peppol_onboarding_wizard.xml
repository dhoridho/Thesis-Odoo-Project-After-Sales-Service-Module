<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model='ir.ui.view' id='peppol_onboard_menu_view'>
            <field name="name">mail.compose.message.view</field>
            <field name="model">mail.compose.message</field>
            <field name="arch" type="xml">
                <form string="PEPPOL ONBOARDING">
                    <notebook>
                        <page string="File Attachment">
                            <group>
                                <field widget="binary" name="image_loa_form" filename="name_loa_form" placeholder="LOA FORM File"/>
                                <field name="name_loa_form" invisible="1"/>
                            </group>
                            <group>
                                <field widget="binary" name="image_acra_file" filename="name_acra_file" placeholder="ACRA File"/>
                                <field name="name_acra_file" invisible="1"/>
                            </group>
                            <group invisible="1">
                                <field widget="binary" name="image_download" filename="name_download" placeholder="PEPPOL LOA Download"/>
                                <field name="name_download" invisible="1"/>
                            </group>
                        </page>
                    </notebook>
                    <footer>
                        <div id="notice">
                            <button name="download_document" type="object" string="Download PEPPOL LOA Form" icon="fa-download"/>
                            <span>Submitting this menu will trigger an email to register to the PEPPOL Network, kindly submit the above files to register</span>
                            <br/>
                        </div>
                        <button name="peppol_onboarding_sent_email" type="object" default_focus="1" string="Submit" icon="fa-envelope-o"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" icon="fa-ban"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model='ir.actions.act_window' id='peppol_onboard_wizard_action'>
            <field name="name">PEPPOL ONBOARDING</field>
            <field name="res_model">mail.compose.message</field>
            <!-- <field name="view_type">form</field> -->
            <field name="view_mode">form</field>
            <field name="view_id" ref="peppol_onboard_menu_view"/>
            <field name="target">new</field>
        </record>
        <menuitem id="peppol_onboard_menux" name="PEPPOL Onboarding" parent="menu_peppol_settingx" action="peppol_onboard_wizard_action" sequence="10"/>
    </data>
</odoo>