<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model='ir.ui.view' id='invoice_peppol_wizard_view'>
            <field name="name">invoice.peppol.wizard.view</field>
            <field name="model">invoice.peppol.wizard</field>
            <field name="arch" type="xml">
                <form string="Query Invoice PEPPOL Wizard">
                    <notebook>
                        <page string="By Client Criteria">
                            <group>
                                <field name="date_from"/>
                                <field name="date_to"/>
                            </group>
                        </page>
                    </notebook>

                    <footer>
                        <button name="get_invoice_by_creteria_json" type="object" default_focus="1" string="Process" class="oe_highlight" icon="fa-get-pocket"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" icon="fa-ban"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model='ir.actions.act_window' id='invoice_peppol_wizard_action'>
            <field name="name">Query Invoice PEPPOL</field>
            <field name="res_model">invoice.peppol.wizard</field>
            <!-- <field name="view_type">form</field> -->
            <field name="view_mode">form</field>
            <field name="view_id" ref="invoice_peppol_wizard_view"/>
            <field name="target">new</field>
        </record>
        <menuitem id="invoice_peppol_menux" name="GET Invoice PEPPOL" parent="menu_peppol_accountx" action="invoice_peppol_wizard_action" sequence="10"/>
    </data>
</odoo>