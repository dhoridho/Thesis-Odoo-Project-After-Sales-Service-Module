<odoo>

    <record id="view_hr_expense_configuration_inherited_view" model="ir.ui.view">
        <field name="name">view.hr.expense.configuration.inherited.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_expense.res_config_settings_view_form"/>
        <field name="arch" type="xml">
        	<xpath expr="//div[@data-key='hr_expense']" position="inside">
                <h2>Reimbursement</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_sg_expense_maxcap"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_sg_expense_maxcap"/>
                        </div>
                    </div>
                </div>
                <div class="row mt16 o_settings_container">
	                <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_sg_expense_payroll"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_sg_expense_payroll"/>
                        </div>
                    </div>
                </div>
                <!-- <div class="col-xs-12 col-md-6 o_setting_box">
	                <div>
	                    <field name="module_sg_expense_maxcap" class="oe_inline"/>
	                    <label for="module_sg_expense_maxcap"/>
	                </div>
	                <div>
	                    <field name="module_sg_expense_payroll" class="oe_inline"/>
	                    <label for="module_sg_expense_payroll"/>
	                </div>
                </div> -->
            </xpath>
        </field>
    </record>

</odoo>
