<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="1">
        <record id="recurring_invoice_contract_scheduler_ir_icon" model="ir.cron">
            <field name="name">Recurring Invoice Contract</field>
            <field name="model_id" ref="model_agreement"/>
            <field name="state">code</field>
            <field name="code">model.create_invoice_agreement()</field>
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="datetime.now() + (datetime.now(pytz.timezone('Asia/Singapore')).replace(hour=2, minute=22, second=00) - datetime.now(pytz.timezone('Asia/Singapore'))) % timedelta(hours=24)"/>
            <field name="numbercall">-1</field>
            <field name="active">False</field>
            <field eval="True" name="doall" />
        </record>
    </data>
    <data noupdate="1">
        <record id="recurring_expense_plan_scheduler_ir_icon" model="ir.cron">
            <field name="name">Recurring Expense Plan</field>
            <field name="model_id" ref="model_agreement_expense_plan"/>
            <field name="state">code</field>
            <field name="code">model.create_invoice()</field>
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="datetime.now() + (datetime.now(pytz.timezone('Asia/Singapore')).replace(hour=2, minute=21, second=00) - datetime.now(pytz.timezone('Asia/Singapore'))) % timedelta(hours=24)"/>
            <field name="numbercall">-1</field>
            <field eval="True" name="doall" />
        </record>
    </data>
</odoo>