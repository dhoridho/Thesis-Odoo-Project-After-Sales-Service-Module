<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- Purchased Property Template-->
        <record id="expire_contract_reminder_template" model="mail.template">
            <field name="name">Contract Expiry Notification</field>
            <field name="model_id" ref="agreement.model_agreement"/>
            <field name="subject">Contract Expiry Notification</field>
            <field name="email_from">${object.create_uid.partner_id.email or user.email|safe}</field>
            <field name="email_to">${object.partner_email | safe}</field>
            <field name="auto_delete" eval="False"/>
            <field name="body_html" type="html">
                <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
                    <tr><td valign="top" style="font-size: 13px;">
                        <div>
                            <h5>NOTIFICATION FROM THE SYSTEM DO NOT REPLY</h5><br/>
                            Dear ${object.partner_id.name},<br/><br/>
                            Your contract by the name ${object.name} will expire within ${object.expiration_notice} day/days, exactly on ${object.end_date}. If you wanted to renew your contract, please contact our team.<br/>
                            Thanks,<br/><br />
                            Best Regards,<br/>
                            <b>${object.create_uid.partner_id.name}</b>
                        </div>
                    </td></tr>
                </table>
            </field>
        </record>
    </data>
</odoo>