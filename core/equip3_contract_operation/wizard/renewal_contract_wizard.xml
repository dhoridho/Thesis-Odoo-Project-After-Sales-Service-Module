<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record model="ir.ui.view" id="renew_contract_wizard_form">
              <field name="name">renew_contract.contract.form</field>
              <field name="model">renewal.contract.wizard</field>
              <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group string="Contract Detail">
                                <field name="agreement_id" widget="selection" options="{'no_create': True, 'no_edit': True}" string="Parent Contract" readonly="1"/>
                                <field name="name"/>
                            </group>
                            <group string="Renew Date">
                                <field name="start_date"/>
                                <field name="end_date" force_save="1" readonly="1"/>
                            </group>
                        </group>
                        <footer>
                            <button name="create_new_contract" type="object" string="Create Contract" icon="fa-book" class="oe_highlight" default_focus="1"/>
                            <button string="Cancel" special="cancel" icon="fa-times-circle"/>
                        </footer>                        
                    </sheet>
                </form>
             </field>
        </record>
    </data>
</odoo>