<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="approval_matrix_expense_plan_view_tree" model="ir.ui.view">
        <field name="name">approval.matrix.expense.plan.view.tree</field>
        <field name="model">approval.matrix.expense.plan</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="company_id" />
                <field name="branch_id" />
                <field name="min_amount" />
                <field name="max_amount" />
            </tree>
        </field>
    </record>

    <record id="approval_matrix_expense_plan_view_form" model="ir.ui.view">
        <field name="name">approval.matrix.expense.plan.view.form</field>
        <field name="model">approval.matrix.expense.plan</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="company_id" />
                            <field name="branch_id" />
                        </group>
                        <group>
                            <field name="created_date"/>
                            <field name="user_id"/>
                            <field name="min_amount"/>
                            <field name="max_amount"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Approval Line">
                            <field name="approval_matrix_expense_plan_line_ids" context="{'approval_matrix_expense_plan_line_ids' : approval_matrix_expense_plan_line_ids}">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle" />
                                    <field name="sequence2" force_save="1" readonly="1" class="approver_matrix_sequence"/>
                                    <field name="user_name_ids" string="User" widget="many2many_tags"/>
                                    <field name="min_approvers" string="Minimum Approvers"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="approval_matrix_expense_plan_action" model="ir.actions.act_window">
        <field name="name">Expense Plan Approval Matrix</field>
        <field name="res_model">approval.matrix.expense.plan</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p></p>
        </field>
    </record>

    <menuitem id="menu_approval_matrix" name="Approval Matrix" action="approval_matrix_expense_plan_action" parent="agreement_legal.agreement_configuration" sequence="5"/>
    <menuitem id="menu_approval_matrix_expense_plan" name="Expense Plan Approval Matrix" parent="menu_approval_matrix" action="approval_matrix_expense_plan_action"/>

</odoo>