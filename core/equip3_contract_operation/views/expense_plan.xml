<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- agreement.expense.plan tree view -->
        <record id="agreement_expense_plan_view_tree" model="ir.ui.view">
            <field name="name">Expense Plan</field>
            <field name="model">agreement.expense.plan</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="agreement_id"/>
                    <field name="expense_type"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <!-- agreement.expense.plan form view -->
        <record id="agreement_expense_plan_view_form" model="ir.ui.view">
            <field name="name">Expense Plan</field>
            <field name="model">agreement.expense.plan</field>
            <field name="arch" type="xml">
                <form string="Expense Plan">
                    <header>
                        <button name="cancel_expense_plan" string="Cancel" type="object" class="btn-default" attrs="{'invisible': [('state', 'not in', ['active'])]}"/>
                        <button name="active_expense_plan" string="Activate" type="object" class="btn-primary" attrs="{'invisible': [('state', 'in', ['active', 'cancelled'])]}"/>
                        <button name="draft_expense_plan" string="Set to Draft" type="object" class="btn-primary" attrs="{'invisible': [('state', 'in', ['draft', 'active'])]}"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="smart_buttons">
                            <button name="invoice_link" type="object" class="oe_stat_button" icon="fa-pencil-square-o">
                                <field string="Bills" name="invoice_count" widget="statinfo"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Expense Plane Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="expense_type" widget="radio" string="Expense Type" colspan="4" attrs="{'readonly': [('state', 'in', ['active'])]}"/>
                                <field name="recurring_type_id" attrs="{'invisible': [('expense_type', '=', 'non_recurring')], 'required': [('expense_type', '=', 'recurring')], 'readonly': [('state', 'in', ['active'])]}" string="Recurring Type" colspan="4"/>
                                <field name="start_date" widget="date" string="Start Date" colspan="4" attrs="{'readonly': [('state', 'in', ['active'])]}"/>
                                <field name="end_date" widget="date" string="End Date" colspan="4" force_save="True" attrs="{'readonly': ['|',('expense_type', '=', 'recurring'), ('state', 'in', ['active'])], 'required': [('expense_type', '=', 'non_recurring')]}"/>
                            </group>
                            <group>
                                <field name="create_uid" readonly="1"/>
                                <field name="create_date" readonly="1"/>
                                <field name="agreement_id" widget="many2one" attrs="{'readonly': [('state', 'in', ['active'])]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="expense_line" string="Expense">
                                <field name="line_ids" nolabel="1" attrs="{'readonly': [('state', 'in', ['active'])]}">
                                    <tree editable="top">
                                        <field name="product_id" />
                                        <field name="name" />
                                        <field name="qty" />
                                        <field name="uom_id" groups="uom.group_uom" />
                                        <field name="unit_price" />
                                        <field name="taxes_id" widget="many2many_tags" string="Taxes" options="{'no_create': True}" optional="show"/>
                                        <field name="price_subtotal" widget="monetary" readonly="1"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right">
                                    <field name="amount_untaxed" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="amount_tax" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <div class="oe_subtotal_footer_separator oe_inline">
                                        <label for="amount_total"/>
                                    </div>
                                    <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="activity_ids" widget="mail_activity" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>
        <!-- agreement.expense.plan action window -->
        <record id="agreement_expense_plan_name_action" model="ir.actions.act_window">
            <field name="name">Expense Plan</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">agreement.expense.plan</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="exepense_plan_menu_act" name="Expense Plan" parent="agreement_legal.agreement_operations" action="agreement_expense_plan_name_action" sequence="20"/>
    </data>   
</odoo>