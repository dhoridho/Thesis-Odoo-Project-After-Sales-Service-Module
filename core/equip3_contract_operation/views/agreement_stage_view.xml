<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- model.name inherit tree view -->
        <record model="ir.ui.view" id="partner_agreement_stage_inherit_list_view">
            <field name="name">Agreement Stage List</field>
            <field name="model">agreement.stage</field>
            <field name="inherit_id" ref="agreement_legal.partner_agreement_stage_list_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='active']" position="after">
                    <field name="is_editable" widget="boolean_toggle"/>
                    <field name="is_new_version" widget="boolean_toggle"/>
                    <field name="is_recurring_invoice" widget="boolean_toggle"/>
                    <field name="is_non_recurring_invoice" widget="boolean_toggle"/>
                </xpath>                
            </field>
        </record>
        <!-- model.name inherit form view -->
        <record model="ir.ui.view" id="partner_agreement_stage_inherit_form_view">
        <field name="name">Agreement Stage Form</field>
        <field name="model">agreement.stage</field>
            <field name="inherit_id" ref="agreement_legal.partner_agreement_stage_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group" position="after">
                    <group>
                        <field name="is_editable"/>
                        <field name="is_new_version"/>
                        <field name="is_recurring_invoice"/>
                        <field name="is_non_recurring_invoice"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>