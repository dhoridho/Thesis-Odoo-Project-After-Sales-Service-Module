<odoo>
    <template id="inherit_invoice_templates_customer_details" inherit_id="general_template.invoice_templates_customer_details">
        <xpath expr="//t[@t-if='o.partner_id.vat']" position="inside">
            <br/>
        </xpath>
        <xpath expr="//strong[text()='Vat: ']" position="after">
            <strong id="tin_label">TIN: </strong>
        </xpath>
        <xpath expr="//strong[text()='Vat: ']" position="attributes">
            <attribute name="t-if">False</attribute>
        </xpath>
    </template>

    <template id="inherit_templates_company_details" inherit_id="general_template.templates_company_details">
        <xpath expr="//t[@t-if='o.company_id.partner_id.email']" position="attributes">
            <attribute name="t-if">False</attribute>
        </xpath>
    </template>
</odoo>
