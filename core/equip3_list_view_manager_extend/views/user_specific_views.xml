<?xml version="1.0" encoding="utf-8"?>
<odoo>



    <record id="user_specific_view_act" model="ir.actions.act_window">
        <field name="name">List View Manager</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">user.specific</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="user_specific_view_tree" model="ir.ui.view">
        <field name="name">user_specific_view_tree</field>
        <field name="model">user.specific</field>
        <field name="arch" type="xml">
            <tree>
                <field name="model_name"/>
                <field name="ks_action_id"/>
                <field name="user_id"/>
            </tree>
        </field>
    </record>


    <menuitem id="menu_list_view_manager" name="List View Manager" parent="base.menu_administration" action='user_specific_view_act'/> 



 </odoo>
