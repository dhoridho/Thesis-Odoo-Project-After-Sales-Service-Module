<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<data>
		<record id="view_delivery_control_app_order_form" model="ir.ui.view">
			<field name="name">delivery.control.app.order.form</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="pragmatic_delivery_control_app.view_delivery_control_app_order_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='delivery_state']" position="replace">
					<field name="delivery_state" clickable="True" widget="statusbar" statusbar_visible="ready,assigned,paid,delivered,complete"/>
					<field name="state" widget="statusbar" statusbar_visible="draft,sent,sale,done"/>
				</xpath>

			</field>
		</record>
	</data>
</odoo>