<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="picking_order_multiple_assign_form" model="ir.ui.view">
        <field name="name">picking.order.multiple.assign.form</field>
        <field name="model">picking.order.multiple.assign</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <p>Driver Selection Wizard</p>
                    <field name="delivery_boy" />
                    <field name="sale_order_ids" widget="many2many_tags" context="{'tree_view_ref':'pragmatic_odoo_delivery_boy.picking_order_reference_tree_view'}" domain="[('state', '=', 'created')]" options="{'no_create': True}"/>
                </group>
                <footer>
                    <button name="assign_multiple" string='Assign' class='oe_highlight' type='object' />
                    <button special="cancel" string="Cancel" type="object" class='oe_highlight'/>
                </footer>
            </form>
        </field>
    </record>

    <record id="picking_order_reference_tree_view" model="ir.ui.view">
        <field name="name">picking.order.reference.tree.view</field>
        <field name="model">picking.order</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sale_order" string="Sale Orders"/>
                <field name="state" invisible="1"/>
                <field name="picking" string="Picking No"/>
                <field name="partner_id"/>
            </tree>
        </field>
    </record>

    <record id="picking_order_multiple_assign_action" model="ir.actions.act_window">
        <field name="name">Multiple Assign </field>
        <field name="res_model">picking.order.multiple.assign</field>
        <field name="view_mode">form</field>
    </record>
</odoo>
