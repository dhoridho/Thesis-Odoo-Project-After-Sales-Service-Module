<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="manage_job_list_kanban" name="Manage Job list">
            <t t-call="website.layout">
                <div class="delivercontrol_section panel panel-primary filterable col-md-12">
                    <style>
                        .dot {
                        height: 10px;
                        width: 10px;
                        background-color: #ff0000;
                        border-radius: 50%;
                        display: inline-block;
                        }
                    </style>
                    <div>
                        <h5 class="background">
                            <span>My Job List</span>
                        </h5>
                    </div>
                    <div class="pull-left" name="header_manage_job_list_left" style="margin-bottom: 10px;">
                        <t t-set="breadcrumbs_searchbar" t-value="True"/>
                        <form class="mt8 float-right" role="search" t-attf-action="/page/job/list/driver" method="get">
                            <t t-call="website.website_search_box"/>
                        </form>
                    </div>
                    <div class="pull-right" name="header_manage_job_list">
                        <input type="hidden" name="delivery_boy" id="delivery_boy" t-att-value="delivery_boy.id"/>
                        <button class="btn btn-default btn-xs driver_status" id="driver_status"
                                style=" background-color: #ebebeb; margin-bottom:19px;">
                            <span id="delivery_boy_change_text" t-field="delivery_boy.status"></span>
                        </button>
                        <button class="btn btn-default btn-xs start_delivery" id="start_delivery"
                                style="background-color: #ebebeb; margin-bottom:19px;">
                            <span id="start_delivery">Start Delivery</span>
                        </button>

                    </div>
                    <div>
                        <table id="display_sale_orders" class="table table-striped" style="width: 97%; margin-left: 2%;">
                            <thead>
                                <tr>
                                    <th style="width:25%; color:#040404; font-size:17px;"> Assigned Driver </th>
                                    <th style="width:25%;font-size:17px;"> Accepted by Driver </th>
                                    <th style="width:25%;font-size:17px;"> Picked </th>
                                    <th style="width:25%; text-align:left; font-size:17px;"> Paid by Customer </th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <div class="col-12" style="display:flex;margin-top:-20px;">
                        <div id="display_sale_orders" class="col-3">
                            <div>
                                <div class="filters">
                                    <t t-foreach="picking_orders_state_assigned" t-as="picking">
                                        <div style="padding:50px; border:2px solid #e7e5fa;
                                                box-shadow:1px 4px 8px rgba(0,0,0,.15);
                                                background-color: #fff; margin-top:5%;">
                                            <span style="color:blue" t-field="picking.sale_order.name"> </span>
                                            <span style="color:blue" t-field="picking.picking.name"> </span> <br/>
                                            <span t-field="picking.partner_id.name"> </span><br/>
                                            <span t-field="picking.delivery_boy.name"> </span><br/>
                                            <span class='dot'/> <span style="margin:8px" t-field="picking.state"> </span>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </div>
                        <div id="display_sale_orders" class="col-3">
                            <div>
                                <div class="filters">
                                    <t t-foreach="picking_orders_state_accept" t-as="picking">
                                        <div style="padding:50px; border:2px solid #e7e5fa;
                                                box-shadow:1px 4px 8px rgba(0,0,0,.15);
                                                background-color: #fff; margin-top:5%;">
                                            <span style="color:blue" t-field="picking.sale_order.name"> </span>
                                            <span style="color:blue" t-field="picking.picking.name"> </span> <br/>
                                            <span t-field="picking.partner_id.name"> </span><br/>
                                            <span t-field="picking.delivery_boy.name"> </span><br/>
                                            <span class='dot'/> <span style="margin:8px" t-field="picking.state"> </span>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </div>
                        <div id="display_sale_orders" class="col-3">
                            <div>
                                <div class="filters">
                                    <t t-foreach="picking_orders_state_picked" t-as="picking">
                                        <div style="padding:50px; border:2px solid #e7e5fa;
                                                box-shadow:1px 4px 8px rgba(0,0,0,.15);
                                                background-color: #fff; margin-top:5%;">
                                            <span style="color:blue" t-field="picking.sale_order.name"> </span>
                                            <span style="color:blue" t-field="picking.picking.name"> </span> <br/>
                                            <span t-field="picking.partner_id.name"> </span><br/>
                                            <span t-field="picking.delivery_boy.name"> </span><br/>
                                            <span class='dot'/> <span style="margin:8px" t-field="picking.state"> </span>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </div>
                        <div id="display_sale_orders" class="col-3">
                            <div>
                                <div class="filters">
                                    <t t-foreach="picking_orders_state_paid" t-as="picking">
                                        <div style="padding:50px; border:2px solid #e7e5fa;
                                                box-shadow:1px 4px 8px rgba(0,0,0,.15);
                                                background-color: #fff; margin-top:5%;">
                                            <span style="color:blue" t-field="picking.sale_order.name"> </span>
                                            <span style="color:blue" t-field="picking.picking.name"> </span> <br/>
                                            <span t-field="picking.partner_id.name"> </span><br/>
                                            <span t-field="picking.delivery_boy.name"> </span><br/>
                                            <span class='dot'/> <span style="margin:8px" t-field="picking.state"> </span>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>