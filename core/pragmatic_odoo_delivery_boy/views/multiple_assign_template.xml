<?xml version="1.0" encoding="UTF-8"?>
<templates>

    <t t-name="MultiAssignRequest.generate_multi_assign_button">
        <button type="button" class="btn btn-primary o_button_generate_multi_assign">
            Assign multiple
        </button>
    </t>

    <t t-extend="ListView.buttons" t-name="MultiAssignRequestListView.buttons">
        <t t-jquery="button.o_list_button_add" t-operation="after">
            <t t-call="MultiAssignRequest.generate_multi_assign_button"/>
        </t>
    </t>

    <t t-extend="KanbanView.buttons" t-name="MultiAssignRequestKanbanView.buttons">
        <t t-jquery="button" t-operation="after">
            <t t-name="MultiAssignRequest.generate_multi_assign_button">
                <t t-call="MultiAssignRequest.generate_multi_assign_button"/>
            </t>
        </t>
    </t>
</templates>