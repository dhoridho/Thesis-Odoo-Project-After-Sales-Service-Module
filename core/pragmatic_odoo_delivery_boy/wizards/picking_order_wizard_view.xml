<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="assign_driver_wizard">
        <field name="name">Delivery Wizard</field>
        <field name="model">picking.order.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">

            <form>
                <group>
                    <span>Driver Selection Wizard</span>
                </group>

                <group>
                    <field name="sale_order" widget="many2many_tags" options="{'no_open': True,'no_create_edit': True}"/>
                    <field name="delivery_boy" required="1" options="{'no_open': True,'no_create_edit': True}" domain="domain_driver"/>
                    <field name="domain_driver" invisible="1"/>
                </group>

                <footer>
                    <button string="Assign" type="object" name="assign_drivers_zipcode_wise" class="btn-primary oe_highlight"/>
                    <button string="Cancel" special="cancel" class="oe_highlight"/>
                </footer>
            </form>

        </field>
    </record>
</odoo>