<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="view_hr_payroll_report_attachment" model="ir.ui.view">
            <field name="name">hr.payroll.report.attachment</field>
            <field name="model">hr.payroll.report.attachment</field>
            <field name="arch" type="xml">
                <form string="Payroll Report">
                    <group>
                        <field name="attachment_file" readonly="1" filename="file_name"/>
                        <field name="file_name" invisible="1"/>
                    </group>
                    <footer>
                        <button special="cancel" string="Close" class="oe_highlight" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_hr_payroll_report_attachment" model="ir.actions.act_window">
            <field name="name">Payroll Report Attachment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.payroll.report.attachment</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref='view_hr_bca_bank_transfer_attachment'/>
            <field name="target">new</field>
        </record>

        <record id="view_hr_payroll_report_form" model="ir.ui.view">
            <field name="name">Payroll Report</field>
            <field name="model">hr.payroll.report</field>
            <field name="arch" type="xml">
                <form string="Payroll Report">
                    <group>
                        <field name="year"/>
                        <field name="month"/>
                        <field name="state"/>
                        <field name="employee_ids" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                    </group>
                    <footer>
                        <button name="action_print_excel" string="Print" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_hr_payroll_report_form" model="ir.actions.act_window">
            <field name="name">Payroll Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.payroll.report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem name="Payroll Report" id="hr_payroll_report_menu"
                  parent="menu_hr_payslip_reports"
                  action="action_view_hr_payroll_report_form"
                  groups="hr_payroll_community.group_hr_payroll_community_manager"
                  />

    </data>
</odoo>
