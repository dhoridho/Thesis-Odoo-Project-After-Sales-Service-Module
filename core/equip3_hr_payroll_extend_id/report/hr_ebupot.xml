<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_ebupot_report_view_form" model="ir.ui.view">
        <field name="name">hr.ebupot.form</field>
        <field name="model">hr.ebupot</field>
        <field name="arch" type="xml">
            <form create="0" edit="0">
                <sheet>
                    <group>
                        <group>
                            <field name="company_id" options="{'no_open': True}"/>
                            <field name="year_id" options="{'no_open': True}"/>
                            <field name="month_id" options="{'no_open': True}"/>
                            <field name="ebupot_type"/>
                            <field name="attachment" filename="attachment_fname" widget="binary"/>
                            <field name="attachment_fname" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_ebupot_report_view_tree" model="ir.ui.view">
        <field name="name">hr.ebupot.tree</field>
        <field name="model">hr.ebupot</field>
        <field name="arch" type="xml">
            <tree create="0">
                <field name="company_id"/>
                <field name="year_id"/>
                <field name="month_id"/>
                <field name="ebupot_type"/>
                <field name="attachment" filename="attachment_fname" widget="binary"/>
                <field name="attachment_fname" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="action_hr_ebupot_view_report" model="ir.actions.act_window">
        <field name="res_model">hr.ebupot</field>
        <field name="name">E-BUPOT PPH 21/26</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help"></field>
    </record>

    <menuitem
            id="menu_hr_ebupot_view_report"
            name="E-BUPOT PPH 21/26"
            parent="menu_hr_payslip_reports"
            action="action_hr_ebupot_view_report"
            sequence="6"/>

</odoo>