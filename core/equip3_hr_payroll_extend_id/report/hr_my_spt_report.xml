<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="hr_my_spt_report_view_form" model="ir.ui.view">
            <field name="name">hr.my.spt.form</field>
            <field name="model">hr.my.spt</field>
            <field name="arch" type="xml">
                <form create="0" edit="0">
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id"/>
                                <field name="year"/>
                                <field name="month"/>
                                <field name="kpp"/>
                                <field name="spt_type"/>
                                <field name="attachment" filename="attachment_fname" widget="binary"/>
                                <field name="attachment_fname" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_my_spt_report_view_tree" model="ir.ui.view">
            <field name="name">hr.my.spt.tree</field>
            <field name="model">hr.my.spt</field>
            <field name="arch" type="xml">
                <tree create="0">
                    <field name="employee_id"/>
                    <field name="year"/>
                    <field name="month"/>
                    <field name="kpp"/>
                    <field name="spt_type"/>
                    <field name="attachment" filename="attachment_fname" widget="binary"/>
                    <field name="attachment_fname" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="action_hr_my_spt_view_report" model="ir.actions.act_window">
            <field name="res_model">hr.my.spt</field>
            <field name="name">My SPT</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('employee_id.user_id','=',uid)]</field>
            <field name="context">{}</field>
            <field name="help"></field>
        </record>

        <menuitem
                id="menu_hr_my_spt_view_report"
                name="My SPT"
                parent="menu_hr_payslip_reports"
                action="action_hr_my_spt_view_report"
                sequence="5"/>

</odoo>