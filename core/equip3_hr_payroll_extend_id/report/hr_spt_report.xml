<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="hr_spt_paper_format" model="report.paperformat">
            <field name="name">1721 A1</field>
            <field name="default" eval="True"/>
            <field name="format">A3</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">15</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">5</field>
            <field name="dpi">80</field>
        </record>

        <record id="action_report_spt_1721_a1" model="ir.actions.report">
            <field name="name">SPT 1721 A1</field>
            <field name="model">hr.employee</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">equip3_hr_payroll_extend_id.report_spt_1721_a1</field>
            <field name="report_file">equip3_hr_payroll_extend_id.report_spt_1721_a1</field>
            <field name="attachment_use">1</field>
            <field name="paperformat_id" ref="equip3_hr_payroll_extend_id.hr_spt_paper_format"/>
            <field name="print_report_name">('SPT 1721 A1 - %s' % (object.employee_id.name))</field>
        </record>

        <record id="action_report_spt_1721_a2" model="ir.actions.report">
            <field name="name">SPT 1721 A2</field>
            <field name="model">hr.employee</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">equip3_hr_payroll_extend_id.report_spt_1721_a2</field>
            <field name="report_file">equip3_hr_payroll_extend_id.report_spt_1721_a2</field>
            <field name="attachment_use">1</field>
            <field name="paperformat_id" ref="equip3_hr_payroll_extend_id.hr_spt_paper_format"/>
            <field name="print_report_name">('SPT 1721 A2 - %s' % (object.employee_id.name))</field>
        </record>

