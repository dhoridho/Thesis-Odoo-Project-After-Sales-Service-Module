            <field name="report_file">equip3_hr_payroll_extend_id.report_spt_masa</field>
            <field name="attachment_use">1</field>
            <field name="paperformat_id" ref="equip3_hr_payroll_extend_id.hr_spt_paper_format"/>
            <field name="print_report_name">('SPT Masa - %s' % (object.company_id.name))</field>
        </record>

