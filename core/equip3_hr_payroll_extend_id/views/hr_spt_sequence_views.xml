<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_spt_sequence_form_view" model="ir.ui.view">
            <field name="name">hr.spt.sequence.form</field>
            <field name="model">hr.spt.sequence</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="number_next"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_spt_sequence_tree_view" model="ir.ui.view">
            <field name="name">hr.spt.sequence.tree</field>
            <field name="model">hr.spt.sequence</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="number_next"/>
                </tree>
            </field>
        </record>

        <record id="hr_spt_sequence_search_view" model="ir.ui.view">
            <field name="name">hr.spt.sequence.search</field>
            <field name="model">hr.spt.sequence</field>
            <field name="arch" type="xml">
                <search >
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="hr_spt_sequence_act_window" model="ir.actions.act_window">
            <field name="name">SPT Sequence</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.spt.sequence</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new SPT Sequence.
                </p>
            </field>
        </record>

        <!-- <menuitem name="SPT Sequence" id="hr_spt_sequence_menu" parent="equip3_hr_masterdata_tax_id.hashmicro_tax_master_data_root" action="hr_spt_sequence_act_window"/> -->

    </data>
</odoo>