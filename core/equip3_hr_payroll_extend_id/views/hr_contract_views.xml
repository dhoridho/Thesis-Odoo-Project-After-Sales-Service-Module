<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_contract_form_inherit_extend_form" model="ir.ui.view">
        <field name="name">hr.contract.inherit.extend.form</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="equip3_hr_contract_extend.hr_contract_form_inherit_extend"/>
        <field name="arch" type="xml">
            <xpath expr='//label[@for="daily_wage"]' position="replace"/>
            <xpath expr='//div[@name="daily_wage"]' position="replace"/>
            <xpath expr='//label[@for="hourly_wage"]' position="replace"/>
            <xpath expr='//div[@name="hourly_wage"]' position="replace"/>
        </field>
    </record>

    <record id="hr_contract_form_additional_allowance_extend" model="ir.ui.view">
        <field name="name">hr.contract.additional.allowance.extend.form</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_payroll_community.hr_contract_form_additional_allowance"/>
        <field name="arch" type="xml">
            <xpath expr='//group[@name="allowances"]' position="replace"/>
        </field>
    </record>

    <record id="hr_contract_view_extend_form" model="ir.ui.view">
        <field name="name">hr.contract.extend.form</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr='//field[@name="structure_type_id"]' position="after">
                <field name="struct_pesangon_id"/>
            </xpath>
            <xpath expr='//group[@name="main_info"]' position="replace"/>
            <xpath expr='//group[@name="notes_group"]' position="before">
                <group name="mains_info">
                    <group name="salary_and_advantages">
                        <label for="wage"/>
                        <div class="o_row" name="wage">
                            <field name="wage" nolabel="1"/>
                            <span>/ month</span>
                        </div>
                        <field name="rapel_date"/>
                        <label for="daily_wage"/>
                        <div class="o_row" name="daily_wage">
                            <field name="daily_wage" nolabel="1"/>
                            <span>/ day</span>
                        </div>
                        <label for="hourly_wage"/>
                        <div class="o_row" name="hourly_wage">
                            <field name="hourly_wage" nolabel="1"/>
                            <span>/ hour</span>
                        </div>
                        <label for="other_allowance_1"/>
                        <div class="o_row" name="other_allowance_1">
                            <field name="other_allowance_1" nolabel="1"/>
                            <span>/ month</span>
                        </div>
                        <label for="other_allowance_2"/>
                        <div class="o_row" name="other_allowance_2">
                            <field name="other_allowance_2" nolabel="1"/>
                            <span>/ month</span>
                        </div>
                        <label for="other_allowance_3"/>
                        <div class="o_row" name="other_allowance_3">
                            <field name="other_allowance_3" nolabel="1"/>
                            <span>/ month</span>
                        </div>
                        <label for="other_allowance_4"/>
                        <div class="o_row" name="other_allowance_4">
                            <field name="other_allowance_4" nolabel="1"/>
                            <span>/ month</span>
                        </div>
                        <label for="other_allowance_5"/>
                        <div class="o_row" name="other_allowance_5">
                            <field name="other_allowance_5" nolabel="1"/>
                            <span>/ month</span>
                        </div>
                    </group>
                    <group name="allowances">
                        <label for="other_allowance_6"/>
                        <div class="o_row" name="other_allowance_6">
                            <field name="other_allowance_6" nolabel="1"/>
                            <span>/ month</span>
                        </div>
                        <label for="other_allowance_7"/>
                        <div class="o_row" name="other_allowance_7">
                            <field name="other_allowance_7" nolabel="1"/>
                            <span>/ month</span>
                        </div>
                        <label for="other_allowance_8"/>
                        <div class="o_row" name="other_allowance_8">
                            <field name="other_allowance_8" nolabel="1"/>
                            <span>/ month</span>
                        </div>
                        <label for="other_allowance_9"/>
                        <div class="o_row" name="other_allowance_9">
                            <field name="other_allowance_9" nolabel="1"/>
                            <span>/ month</span>
                        </div>
                        <label for="other_allowance_10"/>
                        <div class="o_row" name="other_allowance_10">
                            <field name="other_allowance_10" nolabel="1"/>
                            <span>/ month</span>
                        </div>
                    </group>
                </group>
            </xpath>
            <xpath expr='//page[@name="information"]' position="inside">
                <field name="contract_line_ids" widget="one2many_list">
                    <tree string="Contract Lines" editable="bottom" create="0" delete="0">
                       <field name="sequence" invisible="1"/>
                       <field name="name" readonly="1" force_save="1"/>
                       <field name="category" readonly="1" force_save="1"/>
                       <field name="apply_to_overtime_calculation" readonly="1" force_save="1"/>
                       <field name="salary_rule_id" readonly="1" invisible="1" force_save="1"/>
                       <field name="amount_select" readonly="1" invisible="1" force_save="1"/>
                    </tree>
                </field>
            </xpath>
        </field>
    </record>

</odoo>