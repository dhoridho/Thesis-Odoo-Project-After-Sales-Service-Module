<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_natura_category_form_view" model="ir.ui.view">
            <field name="name">hr.natura.category.form</field>
            <field name="model">hr.natura.category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="schema_type" required="1"/>
                                <field name="max_amount"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_natura_category_tree_view" model="ir.ui.view">
            <field name="name">hr.natura.category.tree</field>
            <field name="model">hr.natura.category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="schema_type"/>
                    <field name="max_amount"/>
                </tree>
            </field>
        </record>

        <record id="hr_natura_category_action" model="ir.actions.act_window">
            <field name="name">Natura Tax Categories</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.natura.category</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no data.
                </p>
            </field>
        </record>

        <menuitem name="Natura Tax Categories" id="hr_natura_category_menu" parent="equip3_hr_masterdata_tax_id.hashmicro_tax_master_data_root" action="hr_natura_category_action"/>

    </data>
</odoo>