<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="resource_calendar_form_inherit" model="ir.ui.view">
            <field name="name">resource.calendar.inherit.form</field>
            <field name="model">resource.calendar</field>
            <field name="inherit_id" ref="equip3_hr_working_schedule.resource_calendar_form_flexible_calendar_schedule"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='allow_public_holidays']" position="after">
                    <field name="late_dedution_rules_id" string="Late Deduction Rules"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>