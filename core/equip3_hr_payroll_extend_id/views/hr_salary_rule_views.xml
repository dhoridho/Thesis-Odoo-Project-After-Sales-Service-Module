<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_employee_grade_extend_form" model="ir.ui.view">
        <field name="name">hr.payroll.structure.extend.form</field>
        <field name="model">hr.payroll.structure</field>
        <field name="inherit_id" ref="hr_payroll_community.view_hr_employee_grade_form"/>
        <field name="arch" type="xml">
            <field name="company_id" position="attributes">
                <attribute name="readonly">1</attribute>
            </field>
        </field>
    </record>
    <record id="hr_salary_rule_extend_form" model="ir.ui.view">
        <field name="name">hr.salary.rule.extend.form</field>
        <field name="model">hr.salary.rule</field>
        <field name="inherit_id" ref="hr_payroll_community.hr_salary_rule_form"/>
        <field name="arch" type="xml">
            <field name="company_id" position="attributes">
                <attribute name="readonly">1</attribute>
            </field>
            <field name="appears_on_payslip" position="before">
                <field name="appears_on_report"/>
                <field name="tax_calculation_method"/>
            </field>
            <field name="appears_on_payslip" position="after">
                <field name="category_on_natura_tax" options="{'no_open': True, 'no_create': True, 'no_quick_create': True, 'no_create_edit': True}"/>
            </field>
            <field name="company_id" position="after">
                <field name="payslip_type" widget='many2many_tags' options="{'no_open': True, 'no_create': True, 'no_quick_create': True, 'no_create_edit': True}" attrs="{'invisible': [('appears_on_payslip', '=', False)], 'required': [('appears_on_payslip', '=', True)]}"/>
                <field name="apply_to_overtime_calculation"/>
                <field name="category_on_payslip" attrs="{'invisible': [('appears_on_payslip', '=', False)], 'required': [('appears_on_payslip', '=', True)]}"/>
            </field>
            <xpath expr="//page[@name='rules']" position="after">
                <page string="Worked Days ">
                    <field name="worked_days_notes"/>
                </page>
                <page string="Tax &amp; BPJS">
                    <group>
                        <group string="Tax Configuration">
                            <field name="tax_category"/>
                        </group>
                        <group string="BPJS Configuration">
                            <field name="bpjs_kesehatan_report"/>
                        </group>
                        <group>
                            <separator string="SPT Category" colspan="4"/>
                            <field name="spt_category_ids" nolabel="1"/>
                        </group>
                        <group>
                            <field name="bpjs_ketenagakerjaan_report"/>
                        </group>
                    </group>
                </page>
            </xpath>
            <xpath expr="//page[6]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[7]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>
