<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="late_deduction_rule_form_view" model="ir.ui.view">
            <field name="name">late.deduction.rule.form</field>
            <field name="model">late.deduction.rule</field>
            <field name="arch" type="xml">
                <form string="Late Deduction Rule">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Late Deduction Lines">
                                <field name="late_deduction_lines">
                                    <tree editable="bottom">
                                        <field name="time" widget="float_time"/>
                                        <field name="amount"/>
                                        <field name="is_multiple"/>
                                        <field name="maximum_time" widget="float_time" attrs="{'readonly':[('is_multiple','=',False)]}" force_save="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="late_deduction_rule_tree_view" model="ir.ui.view">
            <field name="name">late.deduction.rule.tree</field>
            <field name="model">late.deduction.rule</field>
            <field name="arch" type="xml">
                <tree string="Late Deduction Rule">
                    <field name="name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="late_deduction_rule_search_view" model="ir.ui.view">
            <field name="name">late.deduction.rule.search</field>
            <field name="model">late.deduction.rule</field>
            <field name="arch" type="xml">
                <search string="Late Deduction Rule">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="late_deduction_rule_act_window" model="ir.actions.act_window">
            <field name="name">Late Deduction Rule</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">late.deduction.rule</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click Create to add new Late Deduction Rule.
                </p>
            </field>
        </record>

        <menuitem name="Late Deduction Rules" id="late_deduction_rule_menu" parent="hr_attendance.menu_hr_attendance_settings"
                  action="late_deduction_rule_act_window" sequence="2"/>

    </data>
</odoo>