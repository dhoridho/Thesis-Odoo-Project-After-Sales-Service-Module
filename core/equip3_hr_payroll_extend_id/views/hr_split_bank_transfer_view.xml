<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_split_bank_transfer_form" model="ir.ui.view">
            <field name="name">hr.split.bank.transfer.form</field>
            <field name="model">hr.split.bank.transfer</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_submit" string="Submit" attrs="{'invisible':[('state','not in',['draft'])]}" type="object" class="oe_highlight"/>
                        <button name="compute_amount" string="Compute" attrs="{'invisible':[('state','not in',['draft'])]}" type="object"/>
                        <button name="action_approve" string="Approve" attrs="{'invisible':['|',('state','not in',['submitted']),('is_next_approvers','=',False)]}" type="object" class="oe_highlight"/>
                        <button name="action_reject" string="Reject" attrs="{'invisible':['|',('state','not in',['submitted']),('is_next_approvers','=',False)]}" type="object" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,cancelled"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="number" readonly="1"/>
                                <field name="name" attrs="{'readonly':[('state','not in',['draft'])]}"/>
                                <field name="employee_id" options="{'no_open':True,'no_create': True}" attrs="{'readonly':['|',('state','not in',['draft']),('is_self_service','=',True)]}" force_save="1"/>
                                <field name="company_id" options="{'no_open':True,'no_create': True}" attrs="{'readonly':[('state','not in',['draft'])]}"/>
                                <field name="is_sbt_approval_matrix" invisible="1"/>
                                <field name="is_next_approvers" invisible="1"/>
                                <field name="approvers_ids" widget="many2many_tags" invisible="1"/>
                                <field name="next_approver_ids" widget="many2many_tags" invisible="1"/>
                                <field name="approved_user_ids" widget="many2many_tags" invisible="1"/>
                                <field name="is_self_service" invisible="1"/>
                                <field name="is_computed" invisible="1"/>
                            </group>
                            <group string="Payslip Settings">
                                <field name="payslip_period_id" options="{'no_open':True,'no_create': True}" attrs="{'readonly':[('state','not in',['draft'])]}"/>
                                <field name="month_id" options="{'no_open':True,'no_create': True}" widget="selection" attrs="{'readonly':[('state','not in',['draft'])]}"/>
                                <label for="date_start" string="Period"/>
                                <div>
                                    <field name="date_start" class="oe_inline" force_save="1"/> - <field name="date_end" class="oe_inline" force_save="1"/>
                                </div>
                                <field name="amount_to_split" readonly="1" force_save="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="split_details" string="Split">
                                <field name="split_bank_transfer_ids" attrs="{'readonly':[('state','not in',['draft'])]}">
                                    <tree editable="bottom">
                                        <field name="employee_id" invisible="1"/>
                                        <field name="bank_id" options="{'no_open':True,'no_create': True}" required="1"/>
                                        <field name="name_of_bank_id" options="{'no_open':True,'no_create': True}" readonly="1" force_save="1"/>
                                        <field name="acc_number" readonly="1" force_save="1"/>
                                        <field name="bank_unit" readonly="1" force_save="1" invisible="1"/>
                                        <field name="acc_holder" readonly="1" force_save="1" invisible="1"/>
                                        <field name="method"/>
                                        <field name="percentage" attrs="{'readonly':[('method','!=','percentage')],'required':[('method','=','percentage')]}" force_save="1"/>
                                        <field name="amount" attrs="{'readonly':[('method','!=','fix_amount')],'required':[('method','=','fix_amount')]}" force_save="1"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="total_amount">
                                    <div class="oe_inline o_td_label">
                                        <label for="total_amount"/>
                                    </div>
                                    <field name="total_amount" nolabel="1"/>
                                </group>
                            </page>
                            <page string="Approval Matrix Lines" attrs="{'invisible':[('is_sbt_approval_matrix','=',False)]}">
                                <field name="split_approval_line_ids">
                                    <tree editable="bottom" create="0" delete="0">
                                        <field name="sequence" readonly="1" force_save="1"/>
                                        <field name="approver_ids" widget="many2many_tags"  readonly="1" force_save="1"/>
                                        <field name="minimum_approver" readonly="1" force_save="1"/>
                                        <field name="approval_status" readonly="1" force_save="1"/>
                                        <field name="timestamp" readonly="1" force_save="1"/>
                                        <field name="feedback" readonly="1" force_save="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_split_bank_transfer_search" model="ir.ui.view">
            <field name="name">hr.split.bank.transfer.search</field>
            <field name="model">hr.split.bank.transfer</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="number"/>
                    <field name="employee_id"/>
                    <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                    <filter string="Submitted" name="submitted" domain="[('state','=','submitted')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Employee" name="employee_id" context="{'group_by':'employee_id'}"/>
                        <filter string="State" name="state" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="hr_split_bank_transfer_tree" model="ir.ui.view">
            <field name="name">hr.split.bank.transfer.tree</field>
            <field name="model">hr.split.bank.transfer</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="number"/>
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="payslip_period_id"/>
                    <field name="month_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="hr_split_bank_transfer_act_window" model="ir.actions.act_window">
            <field name="name">Split Bank Transfer</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.split.bank.transfer</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Split Bank Transfer.
                </p>
            </field>
        </record>

        <menuitem name="Split Bank Transfer" id="hr_split_bank_transfer_menu"
        parent="hr_payroll_community.menu_hr_payroll_community_root"
        action="hr_split_bank_transfer_act_window"
        sequence="11"/>

    </data>
</odoo>
