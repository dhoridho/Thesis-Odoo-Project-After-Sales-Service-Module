<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_settings_view_form_payroll_extend" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.hr.payroll</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="45"/>
            <field name="inherit_id" ref="hr_payroll_community.res_config_settings_view_form_payroll"/>
            <field name="arch" type="xml">
                <xpath expr="//div[contains(@id,'hr_payroll_localization')]" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box" id="payroll_tax_calculation_method" title="Tax Calculation Method">
                        <div class="content-group">
                            <div class="mt16">
                                <label for="tax_calculation_schema" string="Tax Calculation Schema"/>
                                <field style="margin-left:10px;" name="tax_calculation_schema" class="oe_inline" required="1"/>
                            </div>
                        </div>
                        <div class="content-group" attrs="{'invisible':[('tax_calculation_schema','!=','pph21')]}">
                            <div class="mt16">
                                <label for="tax_calculation_method" string="Tax Calculation Method"/>
                                <field style="margin-left:10px;" name="tax_calculation_method" class="oe_inline" required="1"/>
                            </div>
                        </div>
                        <!-- <div class="content-group" attrs="{'invisible':[('tax_calculation_schema','!=','pph21_ter')]}">
                            <div class="mt16">
                                <label for="non_npwp_tax_rate" string="Non-NPWP Tax Rate(%)"/>
                                <field style="margin-left:10px;" name="non_npwp_tax_rate" class="oe_inline"/>
                            </div>
                        </div> -->
                    </div>
                </xpath>
                <xpath expr="//div[contains(@id,'hr_payroll_accountant')]" position="after">
                    <h2>Send Payslip</h2>
                    <div class="row mt16 o_settings_container" id="payslip_allow_send_email">
                        <div class="col-lg-6 col-12 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="payslip_allow_send_email"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="payslip_allow_send_email" string="Allow send payslip to email"/>
                            </div>
                        </div>
                    </div>
                    <h2>BPJS Limits</h2>
                    <div class="row mt16 o_settings_container" name="bpjs_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="bpjs_control_setting" title="BPJS Limits">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row mt20">
                                        <label string="BPJS kesehatan Limit" for="bpjs_kesehatan_limit" class="col-lg-4 o_light_label"/>
                                        <field name="bpjs_kesehatan_limit"/>
                                    </div>
                                    <div class="row">
                                        <label string="Jaminan Pensiun Limit" for="jaminan_pensiun_limit" class="col-lg-4 o_light_label"/>
                                        <field name="jaminan_pensiun_limit"/>
                                    </div>
                                    <div class="row">
                                        <label string="Limit Age of BPJS" for="limit_age_bpjs" class="col-lg-4 o_light_label"/>
                                        <field name="limit_age_bpjs"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
