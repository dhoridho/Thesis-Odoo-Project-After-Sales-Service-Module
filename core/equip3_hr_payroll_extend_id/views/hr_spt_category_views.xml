<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_hr_spt_category_tree" model="ir.ui.view">
            <field name="name">hr.spt.category.tree</field>
            <field name="model">hr.spt.category</field>
            <field name="arch" type="xml">
                <tree string="SPT Category">
                    <field name="name"/>
                    <field name="spt_type"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_spt_category_form" model="ir.ui.view">
            <field name="name">hr.spt.category.form</field>
            <field name="model">hr.spt.category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="spt_type" options="{'no_open': True, 'no_create': True, 'no_quick_create': True, 'no_create_edit': True}"/>
                                <field name="company_id" force_save="1"/>
                                <field name="create_date"/>
                                <field name="create_uid"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_hr_spt_category_search" model="ir.ui.view">
            <field name="name">hr.spt.category.search</field>
            <field name="model">hr.spt.category</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="spt_type"/>
                    <group expand="1" string="Group By">
                        <filter string="SPT Type" name="spt_type_group_by" context="{'group_by':'spt_type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_hr_spt_category" model="ir.actions.act_window">
            <field name="name">SPT Category</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.spt.category</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_spt_type_group_by': 1}</field>
            <field name="help">Display and manage the list of SPT Type.</field>
        </record>

        <menuitem id="menu_hr_spt_category" name="SPT Category"  parent="equip3_hr_masterdata_tax_id.hashmicro_tax_master_data_root"
                  action="action_hr_spt_category" />

    </data>
</odoo>
