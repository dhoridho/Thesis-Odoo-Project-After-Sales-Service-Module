<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_payslip">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-if="o.count_payslip_type &gt; 0">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <style>
                                table, th, td {
                                  border: none;
                                  border-collapse: collapse;
                                }
                                th, td {
                                  padding: 5px;
                                }
                                .table-border, th {
                                  border: 1px solid black;
                                }
                            </style>

                            <h2>Pay Slip</h2>
                            <p t-field="o.name"/>

                            <div class="d-flex justify-content-center">
                                <table style="width:100%;">
                                    <tr>
                                        <td><strong>Name</strong></td>
                                        <td>:</td>
                                        <td><span t-field="o.employee_id"/></td>
                                        <td><strong>Designation</strong></td>
                                        <td>:</td>
                                        <td><span t-field="o.employee_id.job_id"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Employee ID</strong></td>
                                        <td>:</td>
                                        <td><span t-field="o.employee_id.sequence_code"/></td>
                                        <td><strong>Status</strong></td>
                                        <td>:</td>
                                        <td><span t-field="o.employee_id.employee_tax_status"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Date From</strong></td>
                                        <td>:</td>
                                        <td><span t-field="o.date_from"/></td>
                                        <td><strong>Date To</strong></td>
                                        <td>:</td>
                                        <td><span t-field="o.date_to"/></td>
                                    </tr>
                                </table>
                            </div>

                            <table class="table-border mt-4" style="width:100%;">
                                <thead>
                                    <tr>
                                        <th t-attf-style="text-align:center;"><strong>Income</strong></th>
                                        <th style="text-align:center;"><strong>Deduction</strong></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="table-border" style="border-bottom:none;">
                                            <table style="width:100%;">
                                                <tr t-foreach="o.line_ids.filtered(lambda line: line.salary_rule_id.appears_on_payslip and line.salary_rule_id.category_on_payslip == 'income' and line.total &gt; 0.0)" t-as="line">
                                                    <t t-foreach="line.salary_rule_id.payslip_type" t-as="payslip_type">
                                                        <t t-if="payslip_type.name == 'Employee Payslip'">
                                                        <td style="width:70%"><span t-field="line.payslip_type"/> <span t-field="line.name"/></td>
                                                        <td style="text-align:right;"><span t-esc="line.total"
                                                                  t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/></td>
                                                        </t>
                                                    </t>
                                                </tr>
                                            </table>
                                        </td>
                                        <td class="table-border" style="border-bottom:none;">
                                            <table style="width:100%;">
                                                <tr t-foreach="o.line_ids.filtered(lambda line: line.salary_rule_id.appears_on_payslip and line.salary_rule_id.category_on_payslip == 'deduction' and line.total &gt; 0.0)" t-as="line">
                                                    <t t-foreach="line.salary_rule_id.payslip_type" t-as="payslip_type">
                                                        <t t-if="payslip_type.name == 'Employee Payslip'">
                                                        <td style="width:70%;"><span t-field="line.name"/></td>
                                                        <td style="text-align:right;"><span t-esc="line.total"
                                                                  t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/></td>
                                                        </t>
                                                    </t>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                    <!--<t t-set="total_income" t-value="sum([l.total or 0.0 for l in o.line_ids if l.appears_on_payslip and l.category_on_payslip == 'income'])"/>
                                    <t t-set="total_deduction" t-value="sum([l.total or 0.0 for l in o.line_ids if l.appears_on_payslip and l.category_on_payslip == 'deduction'])"/>-->
                                    <t t-set="total_income" t-value="o.get_income_subtotal_payslip()"/>
                                    <t t-set="total_deduction" t-value="o.get_deduction_subtotal_payslip()"/>
                                    <tr>
                                        <td class="table-border" style="border-top:none;">
                                            <table style="width:100%;">
                                                <tr>
                                                    <td style="width:70%;"><strong>Total Income</strong></td>
                                                    <td style="text-align:right;"><strong><span t-esc="total_income" t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/></strong></td>
                                                </tr>
                                            </table>
                                        </td>
                                        <td class="table-border" style="border-top:none;">
                                            <table style="width:100%">
                                                <tr>
                                                    <td style="width:70%;"><strong>Total Deduction</strong></td>
                                                    <td style="text-align:right;"><strong><span t-esc="total_deduction" t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/></strong></td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                    <t t-set="take_home_pay" t-value="total_income - total_deduction"/>
                                    <tr>
                                        <td>
                                            <table style="width:100%">
                                                <!--<tr t-foreach="o.line_ids.filtered(lambda line: line.appears_on_payslip and line.code == 'THP')" t-as="line">
                                                    <td style="width:70%;"><strong><span t-field="line.name"/></strong></td>
                                                    <td style="text-align:right;"><strong><span t-esc="line.total"
                                                              t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/></strong></td>
                                                </tr>-->
                                                <tr>
                                                    <td style="width:70%;"><strong>Take Home Pay</strong></td>
                                                    <td style="text-align:right;"><strong><span t-esc="take_home_pay"
                                                              t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/></strong></td>
                                                </tr>
                                            </table>
                                        </td>
                                        <td>&#160;</td>
                                    </tr>
                                </tbody>
                            </table>
                            <div style="margin-top:50px;">
                                <p class="text-right"><strong>Date:</strong> <span t-esc="context_timestamp(datetime.datetime.today()).strftime('%d %b %Y')"/></p>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </t>
    </template>

