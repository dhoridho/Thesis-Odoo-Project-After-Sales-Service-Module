<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_country_state_tree_inherit" model="ir.ui.view">
            <field name="name">res.country.state.tree.inherit</field>
            <field name="model">res.country.state</field>
            <field name="inherit_id" ref="base.view_country_state_tree"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='code']" position="after">
                    <field name="minimum_wage"/>
                </xpath>
            </field>
        </record>

        <record id="action_country_state" model="ir.actions.act_window">
            <field name="name">Provinces</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.country.state</field>
            <field name="view_id" ref="base.view_country_state_tree"/>
            <field name="context">{'search_default_groupby_country':1}</field>
            <field name="help">Provinces.</field>
        </record>

        <menuitem name="Countries" id="res_country_menu" parent="hr_payroll_community.menu_hr_payroll_community_configuration" action="base.action_country"/>
        <menuitem name="Provinces" id="res_country_state_menu" parent="hr_payroll_community.menu_hr_payroll_community_configuration" action="action_country_state"/>

    </data>
</odoo>
