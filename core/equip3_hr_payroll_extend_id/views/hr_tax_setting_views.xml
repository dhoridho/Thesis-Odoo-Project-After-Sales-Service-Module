<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_tax_setting_form_view" model="ir.ui.view">
            <field name="name">hr.tax.setting.form</field>
            <field name="model">hr.tax.setting</field>
            <field name="arch" type="xml">
                <form string="Tax Setting" delete="false" create="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" invisible="1"/>
                                <field name="job_cost_rate"/>
                                <field name="max_job_cost_rate_monthly"/>
                                <field name="max_job_cost_rate_annualized"/>
                                <field name="pph26_rate"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_tax_setting_tree_view" model="ir.ui.view">
            <field name="name">hr.tax.setting.tree</field>
            <field name="model">hr.tax.setting</field>
            <field name="arch" type="xml">
                <tree delete="false" create="false">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="hr_tax_settings_act_window" model="ir.actions.act_window">
            <field name="name">Tax Setting</field>
            <field name="res_model">hr.tax.setting</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no data
                </p>
            </field>
        </record>

        <menuitem name="Tax Setting" id="hr_tax_setting_menu"
                  parent="equip3_hr_masterdata_tax_id.hashmicro_tax_master_data_root"
                  action="hr_tax_settings_act_window"
                  sequence="1"/>

    </data>
</odoo>