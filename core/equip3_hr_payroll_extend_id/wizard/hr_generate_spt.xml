<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="view_hr_generate_spt_form" model="ir.ui.view">
            <field name="name">Generate SPT</field>
            <field name="model">hr.generate.spt</field>
            <field name="arch" type="xml">
                <form string="Generate SPT">
                    <group>
                        <field name="logo_dirjen_pajak" invisible="1"/>
                        <field name="spt_type"/>
                        <field name="year"/>
                        <field name="month"/>
                        <field name="company_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}" attrs="{'invisible':[('spt_type','!=','spt_masa')]}"/>
                        <field name="employee_ids" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}" attrs="{'invisible':[('spt_type','!=','spt_1721_a1_a2')]}"/>
                    </group>
                    <footer>
                        <button name="action_generate" string="Generate" type="object"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_hr_generate_spt_form" model="ir.actions.act_window">
            <field name="name">Generate SPT</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.generate.spt</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem name="Generate SPT" id="hr_generate_spt_menu"
                  parent="hr_payroll_community.menu_hr_payroll_community_root"
                  action="action_view_hr_generate_spt_form"
                  groups="hr_payroll_community.group_hr_payroll_community_manager"
                  sequence="16"/>

    </data>
</odoo>
