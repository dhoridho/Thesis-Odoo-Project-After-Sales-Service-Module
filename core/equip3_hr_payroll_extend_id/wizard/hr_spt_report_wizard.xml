<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="view_hr_spt_report_form" model="ir.ui.view">
            <field name="name">1721 A1 / A2</field>
            <field name="model">hr.spt.report</field>
            <field name="arch" type="xml">
                <form string="1721 A1 / A2">
                    <group>
                        <field name="company_id"/>
                        <field name="year"/>
                        <field name="month"/>
                        <field name="spt_type" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                        <field name="branch_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                        <field name="employee_ids" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                    </group>
                    <footer>
                        <button name="action_print_excel" string="Print" type="object"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_hr_spt_report_form" model="ir.actions.act_window">
            <field name="name">1721 A1 / A2</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.spt.report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem name="SPT Report" id="hr_spt_report_main_menu"
                  parent="menu_hr_payslip_reports"
                  groups="hr_payroll_community.group_hr_payroll_community_manager"
                  />

        <menuitem name="1721 A1 / A2" id="hr_spt_report_menu"
                  parent="hr_spt_report_main_menu"
                  action="action_view_hr_spt_report_form"
                  groups="hr_payroll_community.group_hr_payroll_community_manager"
                  />

    </data>
</odoo>
