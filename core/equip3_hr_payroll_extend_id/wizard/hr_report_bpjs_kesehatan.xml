<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="view_hr_report_bpjs_kesehatan_form" model="ir.ui.view">
            <field name="name">BPJS Kesehatan Report</field>
            <field name="model">hr.report.bpjs.kesehatan</field>
            <field name="arch" type="xml">
                <form string="BPJS Kesehatan Report">
                    <group>
                        <field name="year"/>
                        <field name="month"/>
                        <field name="employee_ids" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                    </group>
                    <footer>
                        <button name="action_print_xls" string="Print" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_hr_report_bpjs_kesehatan_form" model="ir.actions.act_window">
            <field name="name">BPJS Kesehatan Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.report.bpjs.kesehatan</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem name="BPJS Kesehatan Report" id="hr_report_bpjs_kesehatan_menu"
                  parent="menu_hr_payslip_reports"
                  action="action_view_hr_report_bpjs_kesehatan_form"
                  groups="hr_payroll_community.group_hr_payroll_community_manager"
                  />

    </data>
</odoo>
