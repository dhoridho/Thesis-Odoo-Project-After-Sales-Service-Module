<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="view_hr_artha_bank_transfer_attachment" model="ir.ui.view">
            <field name="name">hr.artha.bank.transfer.attachment</field>
            <field name="model">hr.artha.bank.transfer.attachment</field>
            <field name="arch" type="xml">
                <form string="Artha Graha Bank Transfer">
                    <group>
                        <field name="attachment_file" readonly="1" filename="file_name"/>
                        <field name="file_name" invisible="1"/>
                    </group>
                    <footer>
                        <button special="cancel" string="Close" class="oe_highlight" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_hr_artha_bank_transfer_attachment" model="ir.actions.act_window">
            <field name="name">Artha Graha Bank Transfer Attachment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.artha.bank.transfer.attachment</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref='view_hr_artha_bank_transfer_attachment'/>
            <field name="target">new</field>
        </record>

        <record id="view_hr_artha_bank_transfer_form" model="ir.ui.view">
            <field name="name">Artha Graha Bank Transfer</field>
            <field name="model">hr.artha.bank.transfer</field>
            <field name="arch" type="xml">
                <form string="Artha Graha Bank Transfer">
                    <group>
                        <field name="company_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}" force_save="1"/>
                        <field name="corporate_id" force_save="1"/>
                        <field name="year_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                        <field name="month_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                        <field name="employee_ids" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                    </group>
                    <footer>
                        <button name="action_print" string="Print" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_hr_artha_bank_transfer_form" model="ir.actions.act_window">
            <field name="name">Artha Graha Bank Transfer</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.artha.bank.transfer</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem name="Artha Graha Bank Transfer" id="hr_artha_bank_transfer_menu"
                  parent="menu_hr_payslip_reports"
                  action="action_view_hr_artha_bank_transfer_form"
                  groups="hr_payroll_community.group_hr_payroll_community_manager"
                  />

    </data>
</odoo>
