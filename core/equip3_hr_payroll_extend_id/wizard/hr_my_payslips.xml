<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="view_hr_my_payslips_attachment" model="ir.ui.view">
            <field name="name">hr.my.payslips.attachment</field>
            <field name="model">hr.my.payslips.attachment</field>
            <field name="arch" type="xml">
                <form string="My Payslips Download">
                    <group>
                        <field name="attachment_file" readonly="1" filename="file_name"/>
                        <field name="file_name" invisible="1"/>
                    </group>
                    <footer>
                        <button special="cancel" string="Close" class="oe_highlight" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_hr_my_payslips_attachment" model="ir.actions.act_window">
            <field name="name">My Payslips Attachment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.my.payslips.attachment</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref='view_hr_my_payslips_attachment'/>
            <field name="target">new</field>
        </record>

        <record id="view_hr_my_payslips_form" model="ir.ui.view">
            <field name="name">My Payslips</field>
            <field name="model">hr.my.payslips</field>
            <field name="arch" type="xml">
                <form string="My Payslips">
                    <group>
                        <field name="employee_id" force_save="1" readonly="1" invisible="1"/>
                        <field name="payslip_type" widget="many2many_tags" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                        <field name="payslip_period_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                        <field name="month" options="{'no_open': True, 'no_create': True, 'no_quick_create': True, 'no_create_edit': True}" widget="selection"/>
                        <field name="month_name" force_save="1" invisible="1"/>
                        <field name="year" force_save="1" invisible="1"/>
                        <label for="date_from" string="Period"/>
                        <div>
                            <field name="date_from" class="oe_inline" force_save="1"/> - <field name="date_to" class="oe_inline" force_save="1"/>
                        </div>
                    </group>
                    <footer>
                        <button name="action_print" string="Print" type="object"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_hr_my_payslips_form" model="ir.actions.act_window">
            <field name="name">My Payslips</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.my.payslips</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem name="My Payslips" id="hr_my_payslips_menu"
                  parent="menu_hr_payslip_reports"
                  action="action_view_hr_my_payslips_form" sequence="1"/>

    </data>
</odoo>
