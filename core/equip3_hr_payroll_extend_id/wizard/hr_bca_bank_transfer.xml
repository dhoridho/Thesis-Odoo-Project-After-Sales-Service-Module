<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="view_hr_bca_bank_transfer_form" model="ir.ui.view">
            <field name="name">BCA Bank Transfer</field>
            <field name="model">hr.bca.bank.transfer</field>
            <field name="arch" type="xml">
                <form string="BCA Bank Transfer">
                    <group>
                        <field name="company_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}" force_save="1"/>
                        <field name="corporate_id" force_save="1"/>
                        <field name="output_type"/>
                        <field name="year_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                        <field name="month_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                        <field name="effective_transfer_date" attrs="{'invisible':[('output_type','=','excel')], 'required':[('output_type','=','txt')]}"/>
                        <field name="company_bank_account" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}" attrs="{'invisible':[('output_type','=','excel')], 'required':[('output_type','=','txt')]}"/>
                        <field name="transfer_after_work_days" attrs="{'invisible':[('output_type','=','excel')], 'required':[('output_type','=','txt')]}"/>
                        <field name="employee_ids" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                    </group>
                    <footer>
                        <button name="action_print" string="Print" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_hr_bca_bank_transfer_form" model="ir.actions.act_window">
            <field name="name">BCA Bank Transfer</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.bca.bank.transfer</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem name="BCA Bank Transfer" id="hr_bca_bank_transfer_menu"
                  parent="menu_hr_payslip_reports"
                  action="action_view_hr_bca_bank_transfer_form"
                  groups="hr_payroll_community.group_hr_payroll_community_manager"
                  />

    </data>
</odoo>
