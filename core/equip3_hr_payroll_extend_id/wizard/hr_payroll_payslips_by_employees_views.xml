<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hr_payslip_by_employees_extend" model="ir.ui.view">
        <field name="name">hr_payroll_payslip_employees_extend</field>
        <field name="model">hr.payslip.employees</field>
        <field name="inherit_id" ref="hr_payroll_community.view_hr_payslip_by_employees"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='employee_ids']" position="attributes">
                <attribute name="options">{'no_create':True}</attribute>
            </xpath>
            <xpath expr="//field[@name='employee_ids']" position="before">
                <field name="date_start" invisible="1"/>
                <field name="date_end" invisible="1"/>
                <field name="employee_tax_status" invisible="1"/>
            </xpath>
        </field>
    </record>

</odoo>