<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="view_hr_generate_ebupot_excel" model="ir.ui.view">
            <field name="name">hr.generate.ebupot.excel</field>
            <field name="model">hr.generate.ebupot.excel</field>
            <field name="arch" type="xml">
                <form string="e-Bupot Excel">
                    <group>
                        <field name="excel_file" readonly="1" filename="file_name"/>
                        <field name="file_name" invisible="1"/>
                    </group>
                    <footer>
                        <button special="cancel" string="Close" class="oe_highlight" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_hr_generate_ebupot_excel" model="ir.actions.act_window">
            <field name="name">e-Bupot Excel</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.generate.ebupot.excel</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref='view_hr_generate_ebupot_excel'/>
            <field name="target">new</field>
        </record>

        <record id="view_hr_generate_ebupot_form" model="ir.ui.view">
            <field name="name">Generate e-Bupot</field>
            <field name="model">hr.generate.ebupot</field>
            <field name="arch" type="xml">
                <form string="Generate e-Bupot">
                    <group>
                        <field name="company_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}" readonly="1"/>
                        <field name="ebupot_type"/>
                        <field name="year_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                        <field name="month_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                        <field name="ebupot_signer_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                        <field name="tax_withholding_date"/>
                        <field name="employee_ids" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                    </group>
                    <footer>
                        <button name="action_generate" string="Generate" type="object"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_hr_generate_ebupot_form" model="ir.actions.act_window">
            <field name="name">Generate e-Bupot PPH 21/26</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.generate.ebupot</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem name="Generate e-Bupot PPH 21/26" id="hr_generate_ebupot_menu"
                  parent="hr_payroll_community.menu_hr_payroll_community_root"
                  action="action_view_hr_generate_ebupot_form"
                  groups="hr_payroll_community.group_hr_payroll_community_manager"
                  sequence="17"/>

    </data>
</odoo>
