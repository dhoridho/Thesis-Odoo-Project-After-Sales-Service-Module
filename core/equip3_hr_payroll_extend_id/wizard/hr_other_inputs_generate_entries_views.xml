<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="view_generate_entries_form" model="ir.ui.view">
            <field name="name">Generate Entries</field>
            <field name="model">hr.other.inputs.generate.entries</field>
            <field name="arch" type="xml">
                <form string="Generate Entries">
                    <group>
                        <field name="hr_other_input_id" invisible="1"/>
                        <field name="employee_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="payslip_period_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                        <field name="month"/>
                        <field name="periode_start_date" force_save="1"/>
                        <field name="periode_end_date" force_save="1"/>
                    </group>
                    <footer>
                        <button name="action_generate" string="Generate" type="object"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_generate_entries_form" model="ir.actions.act_window">
            <field name="name">Generate Entries</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.other.inputs.generate.entries</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
