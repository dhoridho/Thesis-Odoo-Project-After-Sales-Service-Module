<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_hr_mayapada_bank_transfer_attachment" model="ir.ui.view">
            <field name="name">hr.mayapada.bank.transfer.attachment</field>
            <field name="model">hr.mayapada.bank.transfer.attachment</field>
            <field name="arch" type="xml">
                <form string="Mayapada Bank Transfer">
                    <group>
                        <field name="attachment_file" readonly="1" filename="file_name"/>
                        <field name="file_name" invisible="1"/>
                    </group>
                    <footer>
                        <button special="cancel" string="Close" class="oe_highlight" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_hr_mayapada_bank_transfer_attachment" model="ir.actions.act_window">
            <field name="name">Mayapada Bank Transfer Attachment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.mayapada.bank.transfer.attachment</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref='view_hr_mayapada_bank_transfer_attachment'/>
            <field name="target">new</field>
        </record>

</odoo>