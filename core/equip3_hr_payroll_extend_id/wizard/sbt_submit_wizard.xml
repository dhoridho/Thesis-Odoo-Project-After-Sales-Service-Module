<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="hr_split_bank_transfer_submit_wizard_form" model="ir.ui.view">
        <field name="name">hr.split.bank.transfer.submit.wizard.form</field>
        <field name="model">hr.split.bank.transfer.submit.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirmation Message">
                <sheet>
                    <field name="message" nolabel="1" readonly="1" widget="html"/>
                    <field name="split_id" invisible="1" />
                </sheet>
                <footer>
                    <button name="action_continue" type="object" string="Continue" class="oe_highlight"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="hr_split_bank_transfer_submit_wizard_action" model="ir.actions.act_window">
        <field name="name">Confirmation Message</field>
        <field name="res_model">hr.split.bank.transfer.submit.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    </data>
</odoo>
