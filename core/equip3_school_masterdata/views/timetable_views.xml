<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_time_table_tree_inherit" model="ir.ui.view">
        <field name="name">time.table.tree.inherit</field>
        <field name="model">time.table</field>
        <field name="inherit_id" ref="timetable.view_time_table_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='standard_id']" position="before">
                <field name="program_id" string="Program"/>
            </xpath>
            <xpath expr="//tree/field[@name='standard_id']" position="attributes">
                <attribute name="string">Intake</attribute>>
            </xpath>
            <xpath expr="//tree/field[@name='year_id']" position="after">
                <field name="term_id" string="Term"/>
            </xpath>
            <xpath expr="//tree/field[@name='name']" position="attributes">
                <attribute name="string">Name</attribute>>
            </xpath>
        </field>
    </record>

    <!-- EMS Class Schedule Form View -->
    <record id="ems_class_schedule_form" model="ir.ui.view">
        <field name="name">ems.class.schedule.form</field>
        <field name="model">ems.class.schedule</field>
        <field name="arch" type="xml">
            <form string="Class Schedule">
                <sheet>
                    <group col="2">
                        <field name="name"/>
                        <field name="teacher_id"/>
                        <field name="standard_id"/>
                    </group>
                    <group>
                        <field name="class_room_id"/>
                        <field name="study_day"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- EMS Class Schedule Tree View -->
    <record id="ems_class_schedule_view_tree" model="ir.ui.view">
        <field name="name">ems.class.schedule.view.tree</field>
        <field name="model">ems.class.schedule</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="teacher_id"/>
                <field name="standard_id"/>
                <field name="class_room_id"/>
                <field name="study_day"/>
            </tree>
        </field>
    </record>

    <!-- EMS Class Schedule action window -->
    <record id="ems_class_schedule_action" model="ir.actions.act_window">
        <field name="name">Class Schedule</field>
        <field name="res_model">ems.class.schedule</field>
        <field name="view_mode">tree,form</field>
    </record>

