<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="equip3_school_masterdata_inherit_view_school_school_form" model="ir.ui.view">
        <field name="name">school.school.form.inherit</field>
        <field name="model">school.school</field>
        <field name="inherit_id" ref="school.view_school_school_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="active" invisible="1" />
            </xpath>
        </field>
    </record>

    <record id="view_school_school_tree_inherit" model="ir.ui.view">
        <field name="name">school.school.form.inherit</field>
        <field name="model">school.school</field>
        <field name="inherit_id" ref="school.view_school_school_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='name']" position="attributes">
                <attribute name="string">School Name</attribute>
            </xpath>
        </field>
    </record>

    <record id="school.action_school_school_form" model="ir.actions.act_window">
        <field name="name">School</field>
    </record>

    <record model="ir.ui.menu" id="school.menu_school_school_sub_form">
        <field name="name">School</field>
    </record>

    <!-- Standards to Program -->
    <record model="ir.ui.menu" id="school.menu_standard_standard_form">
        <field name="name">Program</field>
    </record>
    <record model="ir.actions.act_window" id="school.action_standard_standard_form">
        <field name="name">Program</field>
    </record>


    <record id="view_school_standard_tree_inherit" model="ir.ui.view">
        <field name="name">school.standard.tree.inherit</field>
        <field name="model">school.standard</field>
        <field name="inherit_id" ref="school.view_school_standard_tree"/>
        <field name="arch" type="xml">
            <field name="standard_id" position="attributes">
                <attribute name="string">Program</attribute>
            </field>
            <field name="medium_id" position="attributes">
                <attribute name="string">Course</attribute>
            </field>
        </field>
    </record>

    <record id="view_school_standard_kanban_inherit" model="ir.ui.view">
        <field name="name">school.standard.kanban.inherit</field>
        <field name="model">school.standard</field>
        <field name="inherit_id" ref="school.school_standard_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="////div[hasclass('oe_kanban_title3')]/div[1]" position="replace">
                <div>
                    Program :-
                    <field name="standard_id" />
                </div>
            </xpath>
        </field>
    </record>

    <record id="class_room_form_view_inherit" model="ir.ui.view">
        <field name="name">class.room.form.inherit</field>
        <field name="model">class.room</field>
        <field name="inherit_id" ref="school.class_room_form_view"/>
        <field name="arch" type="xml">
            <field name="number" position="after">
                <field name="capacity"/>
                <field name="equipment_ids" widget="many2many_tags"/>
                <field name="active" invisible="1"/>
            </field>
            <xpath expr="//sheet" position="inside">
            <notebook>
                <page string="Classes">
                    <field name="classes_ids" readonly="1" force_save="1">
                        <tree editable="bottom" edit="0" create="0" delete="0">
                            <field name="name"/>
                            <field name="subject_id"/>
                            <field name="study_day"/>
                            <field name="class_date" widget="date"/>
                            <field name="start_time" widget="float_time"/>
                            <field name="end_time" widget="float_time"/>
                            <field name="teacher_id"/>
                        </tree>
                    </field>
                </page>
            </notebook>
            <div class="oe_chatter">
                <field name="message_follower_ids"/>
                <field name="activity_ids"/>
                <field name="message_ids"/>
            </div>
        </xpath>
        </field>
    </record>

    <record id="class_room_tree_view_inherit" model="ir.ui.view">
        <field name="name">class.room.form.inherit</field>
        <field name="model">class.room</field>
        <field name="inherit_id" ref="school.class_room_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='number']" position="after">
                <field name="capacity"/>
                <field name="equipment_ids" widget="many2many_tags"/>
                <field name="active" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="class_room_kanban_view_inherit" model="ir.ui.view">
        <field name="name">class.room.form.inherit</field>
        <field name="model">class.room</field>
        <field name="inherit_id" ref="equip3_school_operation.class_room_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//kanban/field[@name='number']" position="after">
                <field name="capacity"/>
                <field name="equipment_ids" widget="many2many_tags"/>
            </xpath>
            <xpath expr="//table[@class='oe_kanban_table']/tr/td" position="replace">
                <div class="oe_kanban_title2">
                    <div>Name : <field name="name" /></div>
                </div>
                <div class="oe_kanban_title3">
                    <div>Room Number : <field name="number" /></div>
                    <div>Capacity : <field name="capacity" /></div>
                    <div>Equipment : <field name="equipment_ids" /></div>
                </div>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.menu" id="school.menu_academic_year_sub_form">
        <field name="name">Academic Year</field>
        <field name="sequence">20</field>
    </record>

    <record model="ir.ui.menu" id="school.menu_academic_month_form">
        <field name="name">Term</field>
    </record>
    <record model="ir.ui.menu" id="school.menu_standard_medium_form">
        <field name="name">Course</field>
    </record>

    <record id="school.action_academic_month_form" model="ir.actions.act_window">
        <field name="name">Term</field>
    </record>
    
    <!-- EMS Public Holiday Form View -->
    <record id="ems_public_holiday_view_form" model="ir.ui.view">
        <field name="name">ems.public.holiday.view.form</field>
        <field name="model">ems.public.holiday</field>
        <field name="arch" type="xml">
            <form string="Public Holiday">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date"/>
                        <field name="active" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- EMS Public Holiday Tree View -->
    <record id="ems_public_holiday_view_tree" model="ir.ui.view">
        <field name="name">ems.public.holiday.view.tree</field>
        <field name="model">ems.public.holiday</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

        <!-- EMS Public Holiday action window -->
    <record id="ems_public_holiday_action" model="ir.actions.act_window">
        <field name="name">Public Holiday</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ems.public.holiday</field>
        <field name="view_mode">tree,form</field>
    </record>


    <record id="student_student_kanban_view_inherit" model="ir.ui.view">
        <field name="name">student.student.kanban.view.inherit</field>
        <field name="model">student.student</field>
        <field name="inherit_id" ref="school.student_student_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//templates//div[@class='oe_kanban_box_content oe_kanban_color_bglight oe_kanban_box_show_onclick_trigger oe_kanban_color_border']//table[@class='oe_kanban_table']//table//tr[2]" position="replace">
                <tr>
                    <td>Intake : </td>
                    <td style="padding-left:10px;">
                        <b>
                            <field name="standard_id"/>
                        </b>
                    </td>
                </tr>
            </xpath>
            <xpath expr="//kanban" position="attributes">
                <attribute name="records_draggable">0</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_student_student_form_2_view_inherit" model="ir.ui.view">
        <field name="name">student.student.kanban.view.inherit</field>
        <field name="model">student.student</field>
        <field name="inherit_id" ref="school.view_student_student_form_2"/>
        <field name="arch" type="xml">
            <field name="medium_id" position="attributes">
                <attribute name="string">Course</attribute>
            </field>
        </field>
    </record>

    <record id="view_student_payslip_form_inherit" model="ir.ui.view">
        <field name="name">view.student.payslip.form.inherit</field>
        <field name="model">student.payslip</field>
        <field name="inherit_id" ref="school_fees.view_student_payslip_form"/>
        <field name="arch" type="xml">
            <field name="medium_id" position="attributes">
                <attribute name="string">Course</attribute>
            </field>
        </field>
    </record>

    <record id="school.menu_ems" model="ir.ui.menu">
        <field name="web_icon">equip3_school_masterdata,static/description/icon.png</field>
    </record>

    <menuitem id="ems_public_holiday_menu_act"
                name="Public Holiday"
                parent="school.menu_school_config_form1"
                action="ems_public_holiday_action"
                sequence="90"/>

    <!-- Res Company -->
    <record id="equip3_school_masterdata_inherit_view_company_form" model="ir.ui.view">
        <field name="name">view.res.company.form.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="active" invisible="1" />
            </field>
        </field>
    </record>

    <!-- Res Branch -->
    <record id="equip3_school_masterdata_inherit_branch_res_branch_view_form" model="ir.ui.view">
        <field name="name">view.res.branch.form.inherit</field>
        <field name="model">res.branch</field>
        <field name="inherit_id" ref="branch.branch_res_branch_view_form"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="active" invisible="1" />
            </field>
        </field>
    </record>

    <!-- Grade Master -->
    <record id="equip3_school_masterdata_inherit_view_grade_form" model="ir.ui.view">
        <field name="name">view.grade.master.form.inherit</field>
        <field name="model">grade.master</field>
        <field name="inherit_id" ref="school.view_grade_form"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="active" invisible="1" />
            </field>
        </field>
    </record>
</odoo>
