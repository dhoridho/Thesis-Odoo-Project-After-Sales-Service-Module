<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="equip3_school_masterdata_inherit_edit_student_news_form" model="ir.ui.view">
        <field name="name">student.news.form.inherit</field>
        <field name="model">student.news</field>
        <field name="inherit_id" ref="school.edit_student_news_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='news_update']" position="attributes">
                <attribute name="class">oe_highlight</attribute>
            </xpath>

            <xpath expr="//field[@name='subject']" position="after">
                <field name="active" invisible="1" />
            </xpath>
        </field>
    </record>
    
</odoo>
