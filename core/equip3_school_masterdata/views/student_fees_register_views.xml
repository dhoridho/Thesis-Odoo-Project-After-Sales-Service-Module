<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_student_fees_register_form_inherit" model="ir.ui.view">
        <field name="name">student.fees.register.form.inherit</field>
        <field name="model">student.fees.register</field>
        <field name="inherit_id" ref="school_fees.view_student_fees_register_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group/field[@name='company_id']" position="attributes">
                <attribute name="string">School</attribute>
            </xpath>
            <xpath expr="//field[@name='standard_id']" position="attributes">
                 <attribute name="string">Program</attribute>
                 <attribute name="placeholder">Select Program</attribute>
            </xpath>
            <xpath expr="//field[@name='company_id']" position="after">
                    <field name="branch_id" invisible="1"/>
            </xpath>
            <xpath expr="//sheet/notebook/page[1]" position="attributes">
                    <attribute name="string">Student Invoice</attribute>
            </xpath>
            <xpath expr="//button[@name='fees_register_confirm']" position="attributes">
                    <attribute name="class">oe_highlight</attribute>
            </xpath>
        </field>
    </record>
    
</odoo>
