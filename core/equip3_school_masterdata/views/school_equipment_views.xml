<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_school_equipment_form" model="ir.ui.view">
        <field name="name">school.equipment.form</field>
        <field name="model">school.equipment</field>
        <field name="arch" type="xml">
            <form name="equipment" string="Hostel Information">
                <sheet>
                    <group col="4">
                        <field name="name" />
                        <field name="active" widget="boolean_toggle"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_school_equipment_tree" model="ir.ui.view">
        <field name="name">school.equipment.tree</field>
        <field name="model">school.equipment</field>
        <field name="arch" type="xml">
            <tree string="Equipment">
                <field name="name"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="action_school_equipment" model="ir.actions.act_window">
        <field name="name">Equipment</field>
        <field name="res_model">school.equipment</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Add kanban view Equipment -->
    <record model="ir.ui.view" id="school_equipment_kanban_view">
        <field name="name">Equipment Kanban</field>
        <field name="model">school.equipment</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name" />
                <field name="active" widget="boolean_toggle"/>
                <field name="color" />
                <templates>
                    <t t-name="kanban-box">
                        <t t-set="color" t-value="kanban_color(record.color.raw_value || record.name.value)" />
                        <div t-att-class="color + (record.color.raw_value == 1 ? ' oe_kanban_color_alert' : '')">
                            <div class="oe_kanban_box oe_kanban_color_border">
                                <div class="oe_kanban_box_content oe_kanban_color_bglight oe_kanban_box_show_onclick_trigger oe_kanban_color_border">
                                    <table class="oe_kanban_table">
                                        <tr>
                                            <td valign="top" align="left">
                                                <div class="oe_kanban_title2">
                                                    <div>
                                                        Name :
                                                        <field name="name" /></div>
                                                </div>
                                                <div class="oe_kanban_title3">
                                                    <div>
                                                        Active :
                                                        <field name="active" widget="boolean_toggle"/></div>
                                                </div>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="oe_kanban_buttons_set oe_kanban_color_border oe_kanban_color_bglight oe_kanban_box_show_onclick">
                                    <div class="oe_kanban_left">
                                        <a role="button" string="Edit" class="btn btn-sm btn-default fa fa-pencil" type="edit" aria-label="edit" />
                                        <a role="button" string="Delete" class="btn btn-sm btn-default fa fa-trash" type="delete" aria-label="delete"/>
                                        <a role="button" string="Change Color" icon="color-picker" type="color" name="color" />
                                    </div>
                                    <br class="oe_kanban_clear" />
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="action_school_equipment" model="ir.actions.act_window">
        <field name="name">Equipment</field>
        <field name="res_model">school.equipment</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>
    <record id="action_school_equipment_kanban_view" model="ir.actions.act_window.view">
        <field name="view_mode">kanban</field>
        <field eval="21" name="sequence" />
        <field name="view_id" ref="school_equipment_kanban_view" />
        <field name="act_window_id" ref="equip3_school_masterdata.action_school_equipment" />
    </record>
    <record id="action_school_equipment_tree_view" model="ir.actions.act_window.view">
        <field name="view_mode">tree</field>
        <field eval="20" name="sequence" />
        <field name="view_id" ref="equip3_school_masterdata.view_school_equipment_tree" />
        <field name="act_window_id" ref="equip3_school_masterdata.action_school_equipment" />
    </record>
    
   <menuitem name="Equipment"
    id="menu_school_equipment"
    parent="school.menu_school_standard_form"
    action="action_school_equipment"
    sequence="50"/>

</odoo>
