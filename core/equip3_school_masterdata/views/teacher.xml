<odoo>
    <record id="inherit_teacher_view_id" model="ir.ui.view">
        <field name="name">teacher.inherit.view.form</field>
        <field name="model">school.teacher</field>
        <field name="inherit_id" ref="school.view_school_teacher_form"/>
        <field name="arch" type='xml'>
            <xpath expr="//notebook/page[3]" position="after">
                <page string="Students">
                    <field name="student_id" readonly="1" force_save="1">
                        <form>
                            <field name="student_name"/>
                            <field name="year"/>
                        </form>
                        <tree>
                            <field name="student_name"/>
                            <field name="year"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_student_payslip_form_inherit" model="ir.ui.view">
        <field name="name">student.payslip.form.inherit</field>
        <field name="model">student.payslip</field>
        <field name="inherit_id" ref="school_fees.view_student_payslip_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page/group/field[@name='company_id']" position="attributes">
                <attribute name="string">School</attribute>
            </xpath>
        </field>
    </record>
    
    <record id="school_teacher_kanban_view_inherit" model="ir.ui.view">
        <field name="name">school.teacher.kanban.view.inherit</field>
        <field name="model">school.teacher</field>
        <field name="inherit_id" ref="equip3_school_operation.school_teacher_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//table[@class='oe_kanban_table']/tr/td[2]" position="replace">
                <td valign="top" align="left" style="padding-left:5px; font-size:12px">
                    <table>
                        <tr>
                            <td>School</td>
                            <td>:</td>
                            <td>
                                <b>
                                    <field name="school_id" />
                                </b>
                            </td>
                        </tr>
                        <tr>
                            <td>Subject</td>
                            <td>: </td>
                            <td>
                                <b>
                                    <field name="subject_id"/>
                                </b>
                            </td>
                        </tr>
                        <tr>
                            <td>Intake</td>
                            <td>:</td>
                            <td>
                                <b>
                                    <field name="standard_id" />
                                </b>
                            </td>
                        </tr>
                        <tr>
                            <td>Work Email</td>
                            <td>:</td>
                            <td>
                                <b>
                                    <field name="work_email" />
                                </b>
                            </td>
                        </tr>
                    </table>
                </td>
            </xpath>
        </field>
    </record>

</odoo>