<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="frontend_layouts" name="Main Frontend Layout" inherit_id="web.frontend_layout">
        <xpath expr="//div[@id='wrapwrap']" position="attributes">
            <attribute name="t-attf-class" add="#{'my_consignment_owner' if request.httprequest.path.startswith('/my/consignment_owner') else ''}" separator=" "/>
            <attribute name="t-attf-class" add="#{'my_consignment_pickings' if request.httprequest.path.startswith('/my/consignment_pickings') else ''}" separator=" "/>
            <attribute name="t-attf-class" add="#{'my_consignment_items' if request.httprequest.path.startswith('/my/consignment_product_list') else ''}" separator=" "/>
            <attribute name="t-attf-class" add="#{'my_consignment_stock' if request.httprequest.path.startswith('/my/consignment_stock') else ''}" separator=" "/>
        </xpath>
    </template>

</odoo>
