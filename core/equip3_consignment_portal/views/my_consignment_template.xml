<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="portal_my_home_menu_consignment_stock" name="Portal layout : sales menu entries" inherit_id="portal.portal_breadcrumbs" priority="20">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'consignment_stock' or consignment_stock" t-attf-class="breadcrumb-item">
                <a t-if="consignment_stock" t-attf-href="/my/consignment_stock?{{ keep_query() }}">Consignment Stock</a>
                <t t-else="">Consignment Stock</t>
            </li>  
            <li t-if="picking" class="breadcrumb-item active">
                <t t-esc="picking.name"/>
            </li>
        </xpath>
    </template>

    <template id="portal_my_stock_picking_consignment_stock" name="Portal My Stock Picking: stock picking" inherit_id="portal.portal_my_home" priority="28">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-if="partner_id.is_vendor" t-call="portal.portal_docs_entry">
                <t t-set="title">Consignment Stock</t>
                <t t-set="url" t-value="'/my/consignment_stock'"/>
                <t t-set="placeholder_count" t-value="'stock_quant_ids'" />
            </t>
        </xpath>
    </template>

    <template id="portal_my_consignment_stock" name="Consignment Stock">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True" />
    
            <t t-call="portal.portal_searchbar">
                <t t-set="title">Consignment Stock</t>
            </t>
            <t t-if="not stock_quant_ids">
                <p>There are currently no Consignment Stock for your account.</p>
            </t>
            <t t-if="stock_quant_ids">
                <div class="consignment_stock_table table-responsive mt-4 mb-4">
                    <table class="bg-white table">
                        <thead>
                            <tr>
                                <th class="text-left">Product Name</th>
                                <th>Owner</th>
                                <th>Location</th>
                                <th>On Hand Quantity</th>
                                <th>Available Quantity</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="stock_quant_ids" t-as="stock_quant_id">
                                <tr>
                                    <td><span t-field="stock_quant_id.product_id" /></td>
                                    <td><span t-field="stock_quant_id.owner_id"/></td>
                                    <td><span t-field="stock_quant_id.location_id" /></td>
                                    <td class="text-right"><span t-field="stock_quant_id.inventory_quantity" /></td>
                                    <td class="text-right"><span t-field="stock_quant_id.available_quantity" /></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
                <div t-if="pager" class="o_portal_pager text-center">
                    <t t-call="portal.pager"/>
                </div>
            </t>
        </t>
    </template>

    <template id="display_consignment_product_consignment" inherit_id="odoo_consignment_process.display_consignment_product_consignment">
        <xpath expr="//t/table/t/t/tr" position="attributes">
            <attribute name="t-att-class"></attribute>
        </xpath>
    </template>

    <template id="consignment_owner_page" name="Display Stock Pickings">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-call="portal.portal_searchbar">
                <t t-set="title">Consignments Owner</t>
            </t>
            <table class="table table-hover o_my_status_table">
                <t t-if="pickings" t-call="portal.portal_table">
                    <thead>
                    <tr class="active">
                        <th>PO Line</th>
                        <th>Sales Order</th>
                        <th>Owner</th>
                        <th>Date</th>
                        <th>Stage</th>
                        <!-- <th>Margin</th> -->
                    </tr>
                    </thead>
                    <t t-foreach="pickings" t-as="picking"> <!-- PO -->
                        <!-- <t t-foreach="sale_order_line" t-as="sol"> SOL -->
                            <tr>
                                <td>
                                    <a t-attf-href="/my/consignment_owner/#{picking.order_id.id}">
                                        <t t-esc="picking.order_id.name"/>
                                    </a>
                                </td>
                                <td>
                                    <t t-foreach="sale_order_line" t-as="sol">
                                        <t t-if="picking.order_id.id == sol.purchase_order_line_id.order_id.id">
                                            <t t-esc="sol.order_id.name"/><br/>
                                        </t> 
                                        <t t-else="">
                                        </t>
                                    </t>
                                </td>
                                <td>
                                    <t t-esc="picking.order_id.picking_ids.owner_id.name"/>
                                </td>
                                <td>
                                    <t t-foreach="sale_order_line" t-as="sol">
                                        <t t-if="picking.order_id.id == sol.purchase_order_line_id.order_id.id">
                                            <t t-esc="sol.order_id.date_order"/><br/>
                                        </t> 
                                        <t t-else="">
                                        </t>
                                    </t>
                                </td>
                                <td>
                                    <t t-foreach="sale_order_line" t-as="sol">
                                        <t t-if="picking.order_id.id == sol.purchase_order_line_id.order_id.id">
                                            <span class="badge badge-pill badge-info" t-esc="sol.state"/><br/>
                                        </t> 
                                        <t t-else="">
                                        </t>
                                    </t>
                                </td>
                                <!-- total -->
                                <!-- <td>
                                    <t t-set="total" t-value="0"/>
                                    <t t-foreach="sale_order_line" t-as="sol">
                                        <t t-if="picking.order_id.id == sol.purchase_order_line_id.order_id.id">
                                            <t t-set="total_cummulative" t-value="0"/>
                                            <t t-if="sol.price_unit and sol.purchase_order_line_id.price_unit and sol.qty_delivered">
                                                <t t-set="total_cummulative" t-value="(sol.price_unit - sol.purchase_order_line_id.price_unit) * sol.qty_delivered"/>
                                            </t>
                                            <t t-set="total" t-value="total+total_cummulative"/>
                                        </t>
                                    </t>
                                    <t t-esc="total"/>
                                </td> -->
                            </tr>
                        <!-- </t> -->
                    </t>
                </t>
            </table>
        </t>
    </template>

</odoo>