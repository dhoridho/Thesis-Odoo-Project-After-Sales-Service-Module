<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_purchase_config_settings_digital_sign_view" model="ir.ui.view">
        <field name="name">purchase.order.config.settings.digital.sign.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='purchase']" position="inside">
                <h2>Digital Sign</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="purchase_show_signature" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="purchase_show_signature" />
                            <div class="text-muted">
                                Show digital sign inside purchase orders
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible':[('purchase_show_signature','=',False)]}">
                        <div class="o_setting_left_pane">
                            <field name="purchase_enable_other_sign_option" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="purchase_enable_other_sign_option" />
                            <div class="text-muted">
                                Enable Other Sign Option
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible':[('purchase_show_signature','=',False)]}">
                        <div class="o_setting_left_pane">
                            <field name="chk_sign_confirm" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="chk_sign_confirm" />
                            <div class="text-muted">
                                Check sign before Confirmation Purchase Order
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
