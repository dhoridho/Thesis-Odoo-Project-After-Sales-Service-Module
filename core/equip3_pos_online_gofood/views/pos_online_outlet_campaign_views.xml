<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="pos_online_outlet_campaign_form_inherit" model="ir.ui.view">
        <field name="name">pos.online.outlet.campaign.form.inherit</field>
        <field name="model">pos.online.outlet.campaign</field>
        <field name="inherit_id" ref="equip3_pos_online_outlet.pos_online_outlet_campaign_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='oe_title_header']" position="after">
                <group attrs="{'invisible': [('campaign_type','!=','gofood')]}">
                    <group>
                        <separator name="gofood_conditions" string="Conditions"/>
                        <field name="outlet_id"
                            attrs="{'required': [('campaign_type','=','gofood')], 'readonly': [('campaign_type','=','gofood'), ('create_date','!=',False)]}" options="{'no_create':True}" />
                        <field name="start_date"
                            attrs="{'required': [('campaign_type','=','gofood')], 'readonly': [('campaign_type','=','gofood'), ('create_date','!=',False)]}"/>
                        <field name="end_date"
                            attrs="{'required': [('campaign_type','=','gofood')], 'readonly': [('campaign_type','=','gofood'), ('create_date','!=',False)]}"/>
                        <field name="promo_type"
                            attrs="{'required': [('campaign_type','=','gofood')], 'readonly': [('campaign_type','=','gofood'), ('create_date','!=',False)]}"/>

                        <separator name="gofood_applicable_days"  string="Applicable Days"/>
                        <field name="start_time" widget="float_time"
                            attrs="{'required': [('campaign_type','=','gofood')], 'readonly': [('campaign_type','=','gofood'), ('create_date','!=',False)]}"/>
                        <field name="end_time" widget="float_time"
                            attrs="{'required': [('campaign_type','=','gofood')], 'readonly': [('campaign_type','=','gofood'), ('create_date','!=',False)]}"/>
                        <field name="is_sunday" 
                            attrs="{'readonly': [('campaign_type','=','gofood'), ('create_date','!=',False)]}"/>
                        <field name="is_monday"
                             attrs="{'readonly': [('campaign_type','=','gofood'), ('create_date','!=',False)]}"/>
                        <field name="is_tuesday"
                             attrs="{'readonly': [('campaign_type','=','gofood'), ('create_date','!=',False)]}"/>
                        <field name="is_wednesday"
                             attrs="{'readonly': [('campaign_type','=','gofood'), ('create_date','!=',False)]}"/>
                        <field name="is_thursday"
                             attrs="{'readonly': [('campaign_type','=','gofood'), ('create_date','!=',False)]}"/>
                        <field name="is_friday"
                             attrs="{'readonly': [('campaign_type','=','gofood'), ('create_date','!=',False)]}"/>
                        <field name="is_saturday"
                             attrs="{'readonly': [('campaign_type','=','gofood'), ('create_date','!=',False)]}"/>
                    </group>
                    <group>
                        <separator name="gofood_discount" string="Discount"/>
                        <field name="gofood_discount_type" 
                            attrs="{'required': [('campaign_type','=','gofood')], 'readonly': [('campaign_type','=','gofood'), ('create_date','!=',False)]}"/>
                        <field name="discount_value"
                            attrs="{'readonly': [('campaign_type','=','gofood'), ('create_date','!=',False)]}"/>
                        <field name="gofood_product_id"
                            attrs="{'required': [('campaign_type','=','gofood')], 'readonly': [('campaign_type','=','gofood'), ('create_date','!=',False)]}"
                            options="{'no_create':True}"/>
                        <!-- <field name="gofood_product_ids"
                            attrs="{'required': [('campaign_type','=','gofood')], 'readonly': [('campaign_type','=','gofood'), ('create_date','!=',False)]}"
                            options="{'no_create':True}" 
                            widget="many2many_tags"/> -->
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>