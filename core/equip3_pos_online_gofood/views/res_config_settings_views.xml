<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='pricing_setting_container']" position="after">
                <div class="app_settings_block">
				    <h2>GoBiz EIM Configuration - Facilitator</h2>
				    <div class="row mt16 o_settings_container">
					    <div class="col-xs-12 col-md-12 o_setting_box">
					    	<div class="clearfix mb16">
					    		<label for="gobiz_environment" />
						        <div class="text-muted"></div>
						        <div class="mt4">
						            <field name="gobiz_environment" required="1"/>
						        </div>
						    </div>
						</div>
					    <div class="col-xs-12 col-md-6 o_setting_box"  attrs="{'invisible': [('gobiz_environment','!=','production')]}">
					    	<div class="clearfix mb16">
					    		<label for="gobiz_production_partner_id" />
						        <div class="text-muted"></div>
						        <div class="mt4">
						            <field name="gobiz_production_partner_id" />
						        </div>
						    </div>

					    	<div class="clearfix mb16">
					        	<label for="gobiz_production_client_id" />
						        <div class="text-muted"> </div>
						        <div class="mt4">
						            <field name="gobiz_production_client_id" />
						        </div>
						    </div>

					    	<div class="clearfix mb16">
					        	<label for="gobiz_production_client_secret" />
						        <div class="text-muted"> </div>
						        <div class="mt4">
						            <field name="gobiz_production_client_secret" />
						        </div>
						    </div>
						        
					    	<div class="clearfix mb16">
					        	<label for="gobiz_production_notification_secret_key" />
						        <div class="text-muted"> </div>
						        <div class="mt4">
						            <field name="gobiz_production_notification_secret_key" />
						        </div>
						    </div>
					    	<!-- <div class="clearfix mb16">
					        	<label for="gobiz_production_auth_base_url" />
						        <div class="text-muted"> </div>
						        <div class="mt4">
						            <field name="gobiz_production_auth_base_url" />
						        </div>
						    </div> 
					    	<div class="clearfix mb16">
					        	<label for="gobiz_production_eim_base_url" />
						        <div class="text-muted"> </div>
						        <div class="mt4">
						            <field name="gobiz_production_eim_base_url" />
						        </div>
						    </div> -->
					    </div>
					    <div class="col-xs-12 col-md-6 o_setting_box"  attrs="{'invisible': [('gobiz_environment','!=','sandbox')]}">
					    	<div class="clearfix mb16">
					        	<label for="gobiz_sandbox_partner_id" />
						        <div class="text-muted"></div>
						        <div class="mt4">
						            <field name="gobiz_sandbox_partner_id" />
						        </div>
						    </div>

					    	<div class="clearfix mb16">
					        	<label for="gobiz_sandbox_client_id" />
						        <div class="text-muted"> </div>
						        <div class="mt4">
						            <field name="gobiz_sandbox_client_id" />
						        </div>
						    </div>

					    	<div class="clearfix mb16">
					        	<label for="gobiz_sandbox_client_secret" />
						        <div class="text-muted"> </div>
						        <div class="mt4">
						            <field name="gobiz_sandbox_client_secret" />
						        </div>
						    </div>
						        
					    	<div class="clearfix mb16">
					        	<label for="gobiz_sandbox_notification_secret_key" />
						        <div class="text-muted"> </div>
						        <div class="mt4">
						            <field name="gobiz_sandbox_notification_secret_key" />
						        </div>
						    </div>
					    	<!-- <div class="clearfix mb16">
					        	<label for="gobiz_sandbox_auth_base_url" />
						        <div class="text-muted"> </div>
						        <div class="mt4">
						            <field name="gobiz_sandbox_auth_base_url" />
						        </div>
						    </div>
						        
					    	<div class="clearfix mb16">
					        	<label for="gobiz_sandbox_eim_base_url" />
						        <div class="text-muted"> </div>
						        <div class="mt4">
						            <field name="gobiz_sandbox_eim_base_url" />
						        </div>
						    </div> -->
					    </div>

					    <div class="col-xs-12 col-md-12 mt32 o_setting_box">
					    	<div class="row">
					    		<div class="col-xs-12 col-md-6">
						        	<strong>Online Outlet</strong>
							        <div class="text-muted">Manage online outlet list</div>
							        <div class="mt4">
						    			<button name="equip3_pos_online_outlet.pos_online_outlet_action" type="action">Outlet Settings</button>
							        </div>
							    </div>
						    	<div class="col-xs-12 col-md-6">
						        	<strong>Notification Subscribtions</strong>
							        <div class="text-muted">Manage event notification from gobiz</div>
							        <div class="mt4"> 
						    			<button name="action_open_online_outlet_gobiz_subscription" type="object">Notification Subscribtions Settings</button>
							        </div>
							    </div>
					    	</div>
					    </div>
					</div>
				</div>
            </xpath>
        </field>
    </record>
</odoo>