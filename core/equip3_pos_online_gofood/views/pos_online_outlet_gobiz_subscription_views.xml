    <record id="pos_online_outlet_gobiz_subscription_form" model="ir.ui.view">
        <field name="name">pos.online.outlet.gobiz.subscription.form</field>
        <field name="model">pos.online.outlet.gobiz.subscription</field>
        <field name="arch" type="xml">
            <form create="false" edit="false" delete="false">
                <header></header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_sync"
                            type="object"
                            string="Sync"
                            class="oe_stat_button oe_read_only"
                            icon="fa-refresh"/>
                        <button name="action_delete_subscription"
                            type="object"
                            title="Delete Subscription"
                            confirm="Are you sure want to Delete this record and Delete Subscription from Gobiz?"
                            string="Delete"
                            class="oe_stat_button oe_read_only"
                            icon="fa-trash"/>
                    </div>
                    <group> 
                        <field name="event" required="1"/>
                        <field name="url" required="1" placeholder="https://yourdomain.com/api-gofood/orders"/>
                    </group> 
                </sheet> 
            </form>
        </field>
    </record>

    <record id="pos_online_outlet_gobiz_subscription_tree" model="ir.ui.view">
        <field name="name">pos.online.outlet.gobiz.subscription.tree</field>
        <field name="model">pos.online.outlet.gobiz.subscription</field>
        <field name="arch" type="xml">
            <tree delete="false">
                <field name="event"/>
                <field name="url"/>
                <field name="updated_at" optional="hide"/>
                <field name="external_id" optional="hide"/>
                <field name="is_active" string="Active?"/>
                <field name="created_at" optional="hide"/>
                <field name="aggregator_id" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="pos_online_outlet_gobiz_subscription_search" model="ir.ui.view">
        <field name="name">pos.online.outlet.gobiz.subscription.filter</field>
        <field name="model">pos.online.outlet.gobiz.subscription</field>
        <field name="arch" type="xml">
            <search>
                <field name="event"/>
                <field name="url"/>
            </search>
        </field>
    </record>

    <record id="pos_online_outlet_gobiz_subscription_action" model="ir.actions.act_window" >
        <field name="name">Notification Subscribtions</field>
        <field name="res_model">pos.online.outlet.gobiz.subscription</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'_add_subscription':True}</field>
    </record>

