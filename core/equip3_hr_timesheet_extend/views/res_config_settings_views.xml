<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="equip3_hr_timesheet_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.equip3_hr_timesheet_extend</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_timesheet.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]/div[@data-key='hr_timesheet']" position="inside">
                <h2>Timesheet Approval Setting</h2>
                <div class="row mt16 o_settings_container" name="timesheet_approval_setting_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="timesheet_approval_control_setting" title="Timesheet Approval">
                        <div class="content-group">
                            <div class="mt16">
                                <label for="timesheet_approval_method" string="Approval Method"/>
                                <field style="margin-left:10px;" name="timesheet_approval_method" class="oe_inline" required="1"/>
                            </div>
                            <div class="mt16" attrs="{'invisible':[('timesheet_approval_method','!=','employee_hierarchy')]}">
                                <label for="timesheet_approval_levels" string="Approval Levels"/>
                                <field style="margin-left:16px;" name="timesheet_approval_levels" class="oe_inline" required="1"/>
                            </div>
                        </div>
                    </div>
                </div>
                <!--                Auto Email Follow Cron-->
                <div class="row mt16 o_settings_container" name="auto_follow_up_timesheet">
                    <div class="col-12 col-lg-6 o_setting_box" id="auto_follow_up_timesheet_setting">
                        <div class="content-group">
                            <div class="mt16">
                                <field name="auto_follow_timesheet"/>
                                <label for="auto_follow_timesheet" string="Auto Follow Up" class="oe_inline"
                                       style="margin-left:10px;"/>
                            </div>
                            <div class="mt16" attrs="{'invisible':[('auto_follow_timesheet','!=',True)]}">
                                <label for="interval_number_timesheet" string="Execute Every"/>
                                <div attrs="{'invisible':[('auto_follow_timesheet','!=',True)]}">
                                    <field name="interval_number_timesheet" class="oe_inline"
                                           attrs="{'required':[('auto_follow_timesheet','=',True)]}"/>
                                    <field name="interval_type_timesheet" class="oe_inline"
                                           attrs="{'required':[('auto_follow_timesheet','=',True)]}"/>
                                </div>
                            </div>
                            <div class="mt16" attrs="{'invisible':[('auto_follow_timesheet','!=',True)]}">
                                <label for="number_of_repetitions_timesheet" string="Number of Repetitions"/>
                                <field name="number_of_repetitions_timesheet" class="oe_inline"
                                       attrs="{'required':[('auto_follow_timesheet','=',True)]}"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>