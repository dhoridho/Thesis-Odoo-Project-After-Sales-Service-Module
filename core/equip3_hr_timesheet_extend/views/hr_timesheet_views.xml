<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_timesheet_form_view" model="ir.ui.view">
            <field name="name">hr.timesheet.form</field>
            <field name="model">hr.timesheet</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="confirm" string="Confirm"  attrs="{'invisible':[('state','not in',['draft'])]}" type="object" class="oe_highlight"/>
                        <button name="approve" string="Approve" type="object" class="oe_highlight"
                            attrs="{'invisible': ['|', ('is_approver', '=', False), ('state', '!=', 'to_approve')]}"/>
                        <button name="reject" string="Reject" type="object" class="oe_highlight"
                            attrs="{'invisible': ['|', ('is_approver', '=', False), ('state', '!=', 'to_approve')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,to_approve,approved,rejected"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id" options="{'no_create_edit': True, 'no_open': True}" required="1" readonly="1" force_save="1"/>
                                <field name="job_id"/>
                                <field name="department_id"/>
                                <label for="start_date" string="Period Date"/>
                                <div>
                                    <field name="start_date" class="oe_inline" attrs="{'readonly':[('state','not in',['draft'])]}" required="1"/> -
                                    <field name="end_date" class="oe_inline" attrs="{'readonly':[('state','not in',['draft'])]}" required="1"/>
                                </div>
                                <field name="total_durations" widget="timesheet_uom"/>
                                <field name="approvers_ids" widget="many2many_tags" invisible="1"/>
                                <field name="approved_user_ids" widget="many2many_tags" invisible="1"/>
                                <field name="is_approver" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Timesheet Lines">
                                <field name="timesheet_line_ids" context="{'default_employee_id':employee_id,'default_date':start_date}" attrs="{'readonly':[('state','not in',['draft'])]}">
                                    <tree editable="bottom" default_order="date">
                                        <field name="employee_id" readonly="1" force_save="1"/>
                                        <field name="date" attrs="{'readonly':[('analytic_line_id','!=',False)]}" force_save="1"/>
                                        <field name="project_id" required="1" options="{'no_create_edit': True}" context="{'form_view_ref': 'project.project_project_view_form_simplified',}" attrs="{'readonly':[('analytic_line_id','!=',False)]}" force_save="1"/>
                                        <field name="task_id" optional="show" options="{'no_create_edit': True, 'no_open': True}" widget="task_with_hours" context="{'default_project_id': project_id}" domain="[('project_id', '=', project_id)]" attrs="{'readonly':[('analytic_line_id','!=',False)]}" force_save="1"/>
                                        <field name="name" optional="show" required="0" attrs="{'readonly':[('analytic_line_id','!=',False)]}" force_save="1"/>
                                        <field name="attachment_file" filename="attachment_name"/>
                                        <field name="attachment_name" invisible='1'/>
                                        <field name="unit_amount" optional="show" widget="timesheet_uom" sum="Total" decoration-danger="unit_amount &gt; 24" string="Duration(Hours)" attrs="{'readonly':[('analytic_line_id','!=',False)]}" force_save="1"/>
                                        <field name="company_id" invisible="1"/>
                                        <field name="user_id" invisible="1"/>
                                        <field name="employee_domain_ids" invisible="1"/>
                                        <field name="analytic_line_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Approval Lines">
                                <field name="timesheet_approval_line_ids">
                                    <tree editable="bottom" create="false" delete="false">
                                        <field name="sequence" readonly="1" force_save="1"/>
                                        <field name="user_ids" widget="many2many_tags"  readonly="1" force_save="1"/>
                                        <field name="minimum_approver" readonly="1" force_save="1"/>
                                        <field name="approver_state" invisible="1" force_save="1"/>
                                        <field name="approval_status" readonly="1" force_save="1"/>
                                        <field name="timestamp" readonly="1" force_save="1"/>
                                        <field name="feedback" readonly="1" force_save="1"/>
                                        <field name="is_approve" invisible="1" force_save="1"/>
                                        <field name="approved_employee_ids" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_timesheet_tree_view" model="ir.ui.view">
            <field name="name">hr.timesheet.tree</field>
            <field name="model">hr.timesheet</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="employee_id"/>
                    <field name="job_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="total_durations"/>
                    <field name="state" decoration-primary="state == 'draft'"
                            decoration-warning="state == 'to_approve'"
                            decoration-success="state == 'approved'" 
                            decoration-danger="state == 'rejected'" 
                            widget='badge' string="Status"/>
                </tree>
            </field>
        </record>

        <record id="hr_timesheet_search_view" model="ir.ui.view">
            <field name="name">hr.timesheet.search</field>
            <field name="model">hr.timesheet</field>
            <field name="arch" type="xml">
                <search>
                    <field name="employee_id"/>
                    <field name="job_id"/>
                </search>
            </field>
        </record>

        <record id="hr_timesheet_act_window" model="ir.actions.act_window">
            <field name="name">My Timesheet</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.timesheet</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[('employee_id.user_id', '=', uid),('employees_ids', '=', False)]</field>
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('hr_timesheet_tree_view')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('hr_timesheet_form_view')})]"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click Create to add new Timesheet.
                </p>
            </field>
        </record>

        <menuitem name="My Timesheet" id="hr_timesheet_menu" parent="hr_timesheet.menu_hr_time_tracking"
                action="hr_timesheet_act_window" sequence="1"/>
<!--Timesheet Approve-->
        <record id="hr_timesheet_approve_form_view" model="ir.ui.view">
            <field name="name">hr.timesheet.form</field>
            <field name="model">hr.timesheet</field>
            <field name="arch" type="xml">
                <form create="0">
                    <header>
                        <button name="confirm" string="Confirm" attrs="{'invisible':[('state','not in',['draft'])]}"
                                type="object" class="oe_highlight"/>
                        <button name="approve" string="Approve" type="object" class="oe_highlight"
                                attrs="{'invisible': ['|', ('is_approver', '=', False), ('state', '!=', 'to_approve')]}"/>
                        <button name="reject" string="Reject" type="object" class="oe_highlight"
                                attrs="{'invisible': ['|', ('is_approver', '=', False), ('state', '!=', 'to_approve')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,to_approve,approved,rejected"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id" options="{'no_create_edit': True, 'no_open': True}"
                                       attrs="{'readonly':[('state','not in',['draft'])]}" required="1"/>
                                <field name="job_id"/>
                                <field name="department_id"/>
                                <label for="start_date" string="Period Date"/>
                                <div>
                                    <field name="start_date" class="oe_inline"
                                           attrs="{'readonly':[('state','not in',['draft'])]}" required="1"/>
                                    -
                                    <field name="end_date" class="oe_inline"
                                           attrs="{'readonly':[('state','not in',['draft'])]}" required="1"/>
                                </div>
                                <field name="total_durations" widget="timesheet_uom"/>
                                <field name="approvers_ids" widget="many2many_tags" invisible="1"/>
                                <field name="approved_user_ids" widget="many2many_tags" invisible="1"/>
                                <field name="is_approver" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Timesheet Lines">
                                <field name="timesheet_line_ids" attrs="{'readonly':[('state','not in',['draft'])]}">
                                    <tree editable="bottom" default_order="date">
                                        <field name="employee_id" readonly="1" force_save="1"/>
                                        <field name="date" attrs="{'readonly':[('analytic_line_id','!=',False)]}"
                                               force_save="1"/>
                                        <field name="project_id" required="1" options="{'no_create_edit': True}"
                                               context="{'form_view_ref': 'project.project_project_view_form_simplified',}"
                                               attrs="{'readonly':[('analytic_line_id','!=',False)]}" force_save="1"/>
                                        <field name="task_id" optional="show"
                                               options="{'no_create_edit': True, 'no_open': True}"
                                               widget="task_with_hours" context="{'default_project_id': project_id}"
                                               domain="[('project_id', '=', project_id)]"
                                               attrs="{'readonly':[('analytic_line_id','!=',False)]}" force_save="1"/>
                                        <field name="name" optional="show" required="0"
                                               attrs="{'readonly':[('analytic_line_id','!=',False)]}" force_save="1"/>
                                        <field name="attachment_file" filename="attachment_name"/>
                                        <field name="attachment_name" invisible='1'/>
                                        <field name="unit_amount" optional="show" widget="timesheet_uom" sum="Total"
                                               decoration-danger="unit_amount &gt; 24" string="Duration(Hours)"
                                               attrs="{'readonly':[('analytic_line_id','!=',False)]}" force_save="1"/>
                                        <field name="company_id" invisible="1"/>
                                        <field name="user_id" invisible="1"/>
                                        <field name="analytic_line_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Approval Lines">
                                <field name="timesheet_approval_line_ids">
                                    <tree editable="bottom" create="false" delete="false">
                                        <field name="sequence" readonly="1" force_save="1"/>
                                        <field name="user_ids" widget="many2many_tags" readonly="1" force_save="1"/>
                                        <field name="minimum_approver" readonly="1" force_save="1"/>
                                        <field name="approver_state" invisible="1" force_save="1"/>
                                        <field name="approval_status" readonly="1" force_save="1"/>
                                        <field name="timestamp" readonly="1" force_save="1"/>
                                        <field name="feedback" readonly="1" force_save="1"/>
                                        <field name="is_approve" invisible="1" force_save="1"/>
                                        <field name="approved_employee_ids" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_timesheet_approve_tree_view" model="ir.ui.view">
            <field name="name">hr.timesheet.tree</field>
            <field name="model">hr.timesheet</field>
            <field name="arch" type="xml">
                <tree create="0">
                    <field name="employee_id"/>
                    <field name="job_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="total_durations"/>
                    <field name="state" decoration-primary="state == 'draft'"
                            decoration-warning="state == 'to_approve'"
                            decoration-success="state == 'approved'" 
                            decoration-danger="state == 'rejected'" 
                            widget='badge' string="Status"/>
                </tree>
            </field>
        </record>

        

        <record id="hr_timesheet_approve_act_window" model="ir.actions.act_window">
            <field name="name">Timesheet to Approve</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.timesheet</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[  ('approvers_ids', '=', uid), ('state', '=', 'to_approve')]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('equip3_hr_timesheet_extend.hr_timesheet_approve_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('equip3_hr_timesheet_extend.hr_timesheet_approve_form_view')})]"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click Create to add new Timesheet.
                </p>
            </field>
        </record>

        <menuitem 
        name="Timesheet to Approve" 
        id="hr_timesheet_approve_menu" 
        parent="hr_timesheet.menu_hr_time_tracking"
        groups="hr_timesheet.group_hr_timesheet_approver"
        action="hr_timesheet_approve_act_window" 
        sequence="11"/>

        <!-- My Timesheet Lines -->
        <record id="hr_timesheet_line_form_extend" model="ir.ui.view">
            <field name="name">account.analytic.line.form.extend</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="create">false</attribute>
                    <attribute name="edit">false</attribute>
                </xpath>
            </field>
        </record>

        <record id="hr_timesheet_line_tree_extend" model="ir.ui.view">
            <field name="name">account.analytic.line.tree.hr_timesheet.extend</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="create">false</attribute>
                    <attribute name="edit">false</attribute>
                </xpath>
            </field>
        </record>

        <record id="hr_timesheet.act_hr_timesheet_line" model="ir.actions.act_window">
            <field name="name">My Timesheet Lines</field>
            <field name="res_model">account.analytic.line</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="domain">[('project_id', '!=', False), ('user_id', '=', uid)]</field>
            <field name="context">{
                "search_default_week":1, "search_default_groupby_employee":1
            }</field>
            <field name="search_view_id" ref="hr_timesheet.hr_timesheet_line_search"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No activities found. Let's start a new one!
              </p>
              <p>
                Track your working hours by projects every day and invoice this time to your customers.
              </p>
            </field>
        </record>

        <menuitem name="My Timesheet Lines"
                id="hr_timesheet.timesheet_menu_activity_mine"
                parent="hr_timesheet.menu_hr_time_tracking"
                action="hr_timesheet.act_hr_timesheet_line" 
                sequence='2'/>
    
    </data>
 </odoo>
    