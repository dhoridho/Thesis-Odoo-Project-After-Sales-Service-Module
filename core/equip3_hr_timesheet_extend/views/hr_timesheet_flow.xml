<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	 <record id="timesheet_flow_view_form" model="ir.ui.view">
        <field name="name">hr.timesheet.flow.view.form</field>
        <field name="model">hr.timesheet.flow</field>
        <field name="arch" type="xml">
            <form string="Expense Flow" class="timesheet_flow_menu d-flex flex-column"> 
                <div class="content-header">
                    <div class="d-flex p-3 w-100">
                        <span>Timesheet Flow</span>
                    </div>
                </div>
                <div class="content-body">
                    <div class="container h-100">
                        <div class="row h-100">

                            <div class="col-md-1  d-flex flex-column">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="hr_timesheet.hr_timesheet_config_settings_action" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_timesheet_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Settings</div>
                                             
                                        </button>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="equip3_hr_timesheet_extend.hr_timesheet_approval_matrix_act_window" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_timesheet_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Timesheet Approval Matrix</div>  
                                        </button>        
                                    </div>
                                </div>  
                            </div>
                            <div class="col-md-1 d-flex flex-column">
                                <div class="row mb-5">
                                <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="action_none" 
                                            type="object"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_timesheet_extend/static/src/img/configuration.svg"/>
                                            </div>
                                            <div class="button-text">Configuration</div>
                                             <div class="menu-arrow-down-right">
                                                <span class="arrow is-triangle arrow-bar is-down-right"></span>
                                            </div>
                                             <div class="menu-arrow-up-right">
                                                <span class="arrow is-triangle arrow-bar is-up-right"></span>
                                            </div>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2 d-flex flex-column">
                                <div class="row">
                                <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="equip3_hr_timesheet_extend.hr_manage_timesheet_act_window" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_timesheet_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Manage Timesheet</div>
                                            <div class="menu-arrow-down">
                                                <span class="arrow is-triangle arrow-bar is-down"></span>
                                            </div>   
                                            <div class="menu-arrow-down-right">
                                                <span class="arrow is-triangle arrow-bar is-down-right"></span>
                                            </div>
                                        </button>   
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12" style="height:50px"></div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="equip3_hr_timesheet_extend.hr_timesheet_act_window" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_timesheet_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">My Timesheet</div>  
                                            <div class="menu-arrow-up-right">
                                                <span class="arrow is-triangle arrow-bar is-up-right"></span>
                                            </div>
                                        </button>       
                                    </div>
                                    
                                </div>
                            </div>
                            <div class="col-md-6 d-flex flex-column">
                                <div class="row">
                                    
                                    <div class="col-md-3 col-sm-3 col-3"> 
                                        <button name="hr_timesheet.act_hr_timesheet_line" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_timesheet_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">My Timesheet Lines</div>
                                             <div class="menu-arrow">
                                                <span class="arrow is-triangle arrow-bar is-right"></span>
                                            </div> 
                                        </button>
                                    </div>
                                    <div class="col-md-3 col-sm-3 col-3"> 
                                        <button name="equip3_hr_timesheet_extend.hr_timesheet_approve_act_window" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_timesheet_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Timesheet To Approve</div>
                                            <div class="menu-arrow">
                                                <span class="arrow is-triangle arrow-bar is-right"></span>
                                            </div> 
                                        </button>
                                    </div>
                                    <div class="col-md-3 col-sm-3 col-3"> 
                                        <button name="hr_timesheet.timesheet_action_all" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_timesheet_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">All Timesheet</div>
                                            <div class="menu-arrow">
                                                <span class="arrow is-triangle arrow-bar is-right"></span>
                                            </div> 
                                        </button>
                                    </div>
                                    <div class="col-md-3 col-sm-3 col-3"> 
                                        <button name="action_none" 
                                            type="object"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_timesheet_extend/static/src/img/reporting.svg"/>
                                            </div>
                                            <div class="button-text">Reporting</div>
                                        </button>
                                    </div>
                                    
                                </div>  
                            </div>

                            <div class="col-md-2 d-flex flex-column">
                                <div class="row">
                                    <div class="col-md-6 col-sm-6 col-6"> 
                                        <button name="hr_timesheet.act_hr_timesheet_report" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_timesheet_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">By Employee</div>
                                             
                                        </button>
                                    </div>
                                    <div class="col-md-6 col-sm-6 col-6"> 
                                        <button name="hr_timesheet.timesheet_action_report_by_project" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_timesheet_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">By Project</div>  
                                        </button>        
                                    </div>
                                </div>  
                                <div class="row">
                                    <div class="col-md-6 col-sm-6 col-6"> 
                                        <button name="hr_timesheet.timesheet_action_report_by_task" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_timesheet_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">By Task</div>
                                             
                                        </button>
                                    </div>
                                    <div class="col-md-6 col-sm-6 col-6"> 
                                        <button name="sale_timesheet.timesheet_action_billing_report" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_timesheet_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">By Billing Type</div>  
                                        </button>        
                                    </div>
                                </div> 
                                <div class="row">
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="hr_timesheet_attendance.action_hr_timesheet_attendance_report" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_timesheet_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Timesheet / Attendance</div>
                                             
                                        </button>
                                    </div>
                                </div> 
                            </div>


                        </div>
                    </div>
                            
                            
                            

                        
                </div>
            </form>
        </field>
    </record>

    <record id="timesheet_flow_act_window" model="ir.actions.act_window">
        <field name="name">Timesheet Flow</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.timesheet.flow</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

     <record id="timesheet_flow_action_client" model="ir.actions.client">
        <field name="name">Timesheet Flow</field>
        <field name="tag">timesheet_flow_tag</field>
    </record>

    <menuitem 
        id="timesheet_flow_menu"
        name="Timesheet Flow"
        action="timesheet_flow_action_client"
        parent="hr_timesheet.timesheet_menu_root"
        sequence = "-1"
       />

        <record id="timesheet_flow_menu" model="ir.ui.menu">
            <field name="equip_icon_class">o-hm-sidebar-main-flow</field>
        </record>
</odoo>