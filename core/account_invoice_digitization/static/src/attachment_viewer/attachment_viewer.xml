<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t  t-inherit="mail.Attachment"  t-inherit-mode="extension" >

        <xpath expr="//div[hasclass('o_Attachment_aside')]" position="after">
            <t t-if="attachment.enable_digitizer and !attachment.isTemporary">
                <div class="o_Attachment_aside o-has-multiple-action">
                    <div class="o_Attachment_asideItem o_Attachment_asideItemDownload" role="menuitem" tabindex="0" t-on-click="attachment.onClickReload" title="Reload Data with AI">
                        <i class="fa fa-refresh" />
                    </div>
                </div>
            </t>
        </xpath>

        <xpath expr="//div[hasclass('o_Attachment_imageOverlay')]/div[hasclass('o_Attachment_actions')]" position="inside">
            <t t-if="attachment.enable_digitizer and !attachment.isTemporary">
                <div class="o_Attachment_action o_Attachment_actionDownload" role="menuitem" tabindex="0" t-on-click="attachment.onClickReload" title="Reload Data with AI">
                    <i class="fa fa-refresh" />
                </div>
            </t>
        </xpath>

    </t>

</templates>