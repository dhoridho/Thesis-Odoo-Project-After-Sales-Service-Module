<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="purchase_order_wizard_view_form" model="ir.ui.view">
            <field name="name">purchase.order.wizard.view.form</field>
            <field name="model">purchase.order.wizard</field>
            <field name="priority">99</field>
            <field name="arch" type="xml">
                <form string="Genarate Purchase Order">
                    <group>
                        <group>
                            <field name="partner_ids" widget="many2many_tags" 
                            attrs="{'required':[('sh_create_po','!=','pr')],'invisible':[('sh_create_po','=','pr')]}"
                            context="{'res_partner_search_mode': 'supplier', 'show_vat': True,
                                           'tree_view_ref': 'equip3_purchase_operation.view_res_partner_line_tree',
                                           'default_is_vendor': 1,
                                           'search_default_supplier': 1}"/>
                            <field name="sh_create_po" />
                            <label for="is_dropship" string="Delivery Type"/>
                            <div class="o_row" name="is_dropship">
                                <field name="is_dropship" nolabel="1"/>
                                <span>Dropship</span>
                            </div>
                        </group>
                    </group>
                    <footer>
                        <button string="Generate Purchase Order" name="action_create_po_from_so_y" type="object" class="btn-primary" />
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>