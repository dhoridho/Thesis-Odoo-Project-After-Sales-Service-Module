<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="order_quotation_tree_inherit2" model="ir.ui.view">
            <field name="name">quotation.tree.inherit</field>
            <field name="model">sale.order</field>
            <field name="type">tree</field>
            <field name="priority">17</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="inside">
                    <field name="client_order_ref" optional="hide"/>
                    <field name="company_id" position="move" optional="show"/>
                </xpath>
            </field>
        </record>

        <record id="order_sale_tree_inherit2" model="ir.ui.view">
            <field name="name">sale.order.tree.inherit</field>
            <field name="model">sale.order</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="priority">17</field>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="inside">
                    <field name="client_order_ref" optional="hide"/>
                    <field name="branch_id" position="replace">
                        <field name="branch_id" optional="show"/>
                    </field>
                    <field name="company_id" position="move" optional="show"/>
                </xpath>
            </field>
        </record>

        <!-- Add you code here -->
        <!-- sale.order inherit form view -->
        <record id="view_order_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.inherit.view.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="equip3_sale_operation.sale_order_form_view_inherit_sale_operation"/>
            <field name="arch" type="xml">
                <xpath expr="//group/div/div/div[@name='col_3']/group[@name='group_col_3']" position="inside">
                    <!-- Add your fields here -->
                    <label for="is_dropship" string="Delivery Type"/>
                    <div class="o_row" name="is_dropship">
                        <field name="is_dropship" nolabel="1" style="margin-right:20px;"/>
                        <span>Dropship</span>
                    </div>
                </xpath>
            </field>
        </record>

        <!-- sale.order inherit form view -->
        <record id="sh_so_po_inherit_sale_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.inherit.view.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sh_so_po.sh_so_po_inherit_sale_form"/>
            <field name="arch" type="xml">
                <!-- Add your xpath here -->
                <xpath expr="//button[@name='sh_action_view_purchase']" position="after">
                    <!-- Add your fields here -->
                    <button name="sh_action_view_purchase_request" type="object" class="oe_stat_button" icon="fa-credit-card" attrs="{'invisible': [('purchase_request_count', '=', 0)]}">
                        <field name="purchase_request_count" widget="statinfo" string="Purchase Request"/>
                    </button>
                </xpath>
                <xpath expr="//button[@name='sh_create_po_from_so']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_dropship','=',True),('state','!=','sale')] }</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>