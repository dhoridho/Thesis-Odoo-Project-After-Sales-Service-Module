<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- Add you code here -->
        <!-- purchase.request inherit form view -->
        <record id="view_purchase_request_form_inherit" model="ir.ui.view">
            <field name="name">purchase.request.inherit.view.form</field>
            <field name="model">purchase.request</field>
            <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group/group[1]" position="inside">
                    <!-- Add your fields here -->
                    <field name="customer_partner_id" attrs="{'invisible':[('is_dropship','!=',True)]}"/>
                    <label for="is_dropship" string="Delivery Type" attrs="{'invisible':[('is_dropship','!=',True)]}"/>
                    <div class="o_row" name="is_dropship" attrs="{'invisible':[('is_dropship','!=',True)]}">
                        <field name="is_dropship" nolabel="1"/>
                        <span>Dropship</span>
                    </div>
                </xpath>
            </field>
        </record>


        <!-- Inherit dari equip3_purchase_operation karena mau nargetin posisi field dibawah destination -->
        <!-- purchase.request inherit form view -->
        <record id="purchase_request_view_form_inherit" model="ir.ui.view">
            <field name="name">purchase.request.inherit.view.form</field>
            <field name="model">purchase.request</field>
            <field name="inherit_id" ref="equip3_purchase_operation.purchase_request_view_form"/>
            <field name="arch" type="xml">
                <!-- Add your xpath here -->
                <field name="destination_warehouse" position="attributes">
                    <attribute name="attrs">{'invisible' : ['|',('is_dropship','=',True),('is_single_delivery_destination', '=', False)],'required' : [('is_single_delivery_destination', '=', True)], 'readonly': [('state', 'in', ['to_approve', 'approved', 'purchase_request'])]}</attribute>
                </field>
                <field name="destination_warehouse" position="after">
                    <field name="customer_location_partner_id" attrs="{'invisible':[('is_dropship','!=',True)]}"/>
                </field>
            </field>
        </record>

        <!-- OVERRIDE -->
        <record
            id="purchase_request.action_purchase_request_line_make_purchase_order"
            model="ir.actions.act_window"
        >
            <field name="name">Create RFQ</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.request.line.make.purchase.order</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="purchase_request.view_purchase_request_line_make_purchase_order" />
            <field name="context">{'default_pr_id':active_id}</field>
            <field name="target">new</field>
            <field
                name="binding_model_id"
                ref="purchase_request.model_purchase_request_line"
            />
        </record>
    </data>
</odoo>