    <record id="rfq_open_tender_submission_asset_action" model="ir.actions.act_window">
        <field name="name">RFQ Open Tender Submission</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.order</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('dp', '=', False), ('is_assets_orders', '=', True), ('state', 'in', ['draft', 'sent', 'cancel', 'waiting_for_approve', 'reject', 'rfq_approved']),('po', '=', False),('agreement_id','!=',False),('tender_scope','=','open_tender')]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
            </p><p>
                <!-- More details about what a user can do with this object will be OK --> 
            </p>
        </field>
    </record>

    <menuitem
        id="menu_purchase_assets_order"
        name="Assets Order"
        parent="purchase.menu_purchase_root"
        sequence="4"/>

    <record id="equip3_purchase_asset.menu_purchase_assets_order" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-parent-purchase-assets-order</field>
    </record>

    <menuitem
        id="main_menu_assets_purchase_order"
        name="Purchase Orders"
        parent="menu_purchase_assets_order"
        sequence="4"/>

    <menuitem
        id="main_menu_assets_purchase_request"
        name="Purchase Requests"
        parent="menu_purchase_assets_order"
        sequence="5"/>

    <menuitem id="menu_requests_for_quotation_assets" name="Requests for Quotation" action="request_for_quotation_menu_order_action_assets"
        parent="main_menu_assets_purchase_order" sequence="3" />

    <!-- purchase.menu_procurement_management = Menu Categ GOODS ORDER -->
    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="menu_create_multiple_rfq_assets" name="Create Multiple RFQ" action="multiple_rfq_form_action_orders_assets"
        parent="main_menu_assets_purchase_order" sequence="4" />

    <menuitem id="menu_purchase_orders" name="Purchase Orders" action="product_purchase_orders_assets"
