<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
            <record id="accounting_setting_view_form" model="ir.ui.view">
                <field name="name">accounting.config.settings.view.form</field>
                <field name="model">accounting.config.settings</field>
                <field name="arch" type="xml">
                    <form string="" create="0" delete="0">
                        <sheet>
                           <group name="reminder_setting" string="Reminder Settings">

                             <div class="row mt16 o_settings_container" name="bank_integration_setting_container">
                                <div class="col-12 col-lg-12 o_setting_box" id="bank_integration_setting">
                                    <div>
                                        <field name="invoice_bill_reminder"/>
                                        <label string="Invoice and Bill Reminder" for="invoice_bill_reminder"/>
                                    </div>
                                        <group style="margin-left:3%;" string="Bill Reminder" attrs="{'invisible': [('invoice_bill_reminder', '=', False)]}">
                                            <label string="Before Due Date" for="reminder_interval_before" class="oe_inline"/>
                                            <div class="address_format">
                                                <field name="reminder_interval_before_unit"  style="width: 15%; margin-left:1px" modifiers="{}"/>
                                                <field name="reminder_interval_before" attrs="{'invisible': [('reminder_interval_before_unit', '=', 'months')]}"  style="width:40%" modifiers="{}"/>
                                                <field name="days_bill_before" attrs="{'invisible': [('reminder_interval_before_unit', 'in', ['months','days'])]}"  style="width:40%" modifiers="{}"/>
                                                <field name="sending_date_bill_before" attrs="{'invisible': [('reminder_interval_before_unit', 'in', ['weeks','days'])]}"  style="width:40%" modifiers="{}"/>

                                            </div>
                                        </group>
                                        <group style="margin-left:3%;" attrs="{'invisible': [('invoice_bill_reminder', '=', False)]}">
                                            <label string="After Maturity" for="reminder_interval_after" class="oe_inline"/>
                                            <div class="address_format">
                                                <field name="reminder_interval_after_unit" style="width: 15%; margin-left:1px" modifiers="{}" />

                                            <field name="reminder_interval_after" attrs="{'invisible': [('reminder_interval_after_unit', '=', 'months')]}" style="width:40%" modifiers="{}"/>
                                                <field name="days_bill_after" attrs="{'invisible': [('reminder_interval_after_unit', 'in', ['months','days'])]}"  style="width:40%" modifiers="{}"/>
                                                <field name="sending_date_bill_after" attrs="{'invisible': [('reminder_interval_after_unit', 'in', ['weeks','days'])]}"  style="width:40%" modifiers="{}"/>

                                            </div>
                                        </group>

                                        <group style="margin-left:3%;" string="Invoice Reminder" attrs="{'invisible': [('invoice_bill_reminder', '=', False)]}">
                                            <label string="Before Due Date" for="reminder_interval_before_invoice" class="oe_inline"/>
                                            <div class="address_format">
                                                <field name="reminder_interval_before_unit_invoice" style="width: 15%; margin-left:1px"
                                                    modifiers="{}" attrs="{'invisible': [('invoice_bill_reminder', '=', False)]}"/>

                                                <field name="reminder_interval_before_invoice" style="width:40%" modifiers="{}"
                                                    attrs="{'invisible': [('reminder_interval_before_unit_invoice', '=', 'months')]}" />

                                                <field name="days_invoice_before" attrs="{'invisible': [('reminder_interval_before_unit_invoice', 'in', ['months','days'])]}"  style="width:40%" modifiers="{}"/>

                                                <field name="sending_date_invoice_before" attrs="{'invisible': [('reminder_interval_before_unit_invoice', 'in', ['weeks','days'])]}"  style="width:40%" modifiers="{}"/>

                                                <field name="date_last_reminder_due_date" placeholder="Date last send email" invisible="1"  style="width:40%" modifiers="{}"/>
                                                

                                            </div>
                                        </group>
                                        <group style="margin-left:3%;" attrs="{'invisible': [('invoice_bill_reminder', '=', False)]}">
                                            <label string="After Maturity" for="reminder_interval_after_invoice" class="oe_inline"/>
                                            <div class="address_format">
                                                <field name="reminder_interval_after_unit_invoice" style="width: 15%; margin-left:1px"
                                                    modifiers="{}" attrs="{'invisible': [('invoice_bill_reminder', '=', False)]}"/>


                                                <field name="reminder_interval_after_invoice" attrs="{'invisible': [('reminder_interval_after_unit_invoice', '=', 'months')]}" style="width:40%" modifiers="{}"
                                                    />
                                                <field name="days_invoice_after" attrs="{'invisible': [('reminder_interval_after_unit_invoice', 'in', ['months','days'])]}"  style="width:40%" modifiers="{}"/>

                                                <field name="sending_date_invoice_after" attrs="{'invisible': [('reminder_interval_after_unit_invoice', 'in', ['weeks','days'])]}"  style="width:40%" modifiers="{}"/>

                                            </div>
                                        </group>
                                    </div>
                                </div>
                            
                           </group>
                           
                           <group name="approval_matrix_setting" string="Approval Matrix Settings">
                                <div class="row mt16 o_settings_container" name="approval_matrix_setting_container">
                                    <div class="col-6 col-lg-6 o_setting_box" id="approval_matrix_setting">
                                        <div style="margin-top: 20px;">
                                            <field name="is_allow_budget_approval_matrix"/>
                                            <label string="Budget Approval Matrix" for="is_allow_budget_approval_matrix" style="font-weight: bold;"/>
                                        </div>
                                        <div class="text-muted" style="padding-left: 40px; margin-top: -10px;">
                                            Set The Budget Approval Matrix
                                        </div>
                                        <div style="padding-left: 40px;padding-top: 20px;">
                                            <field name="is_allow_budget_wa_notification" attrs="{'invisible': [('is_allow_budget_approval_matrix', '=', False)]}"/>
                                            <label string="Enable Budget Whatsapp Notification" for="is_allow_budget_wa_notification" attrs="{'invisible': [('is_allow_budget_approval_matrix', '=', False)]}" />
                                        </div>

                                        <div style="margin-top: 20px;">
                                            <field name="is_allow_customer_deposit_approval_matrix"/>
                                            <label string="Customer Deposit Approval Matrix" for="is_allow_customer_deposit_approval_matrix" style="font-weight: bold;"/>
                                        </div>
                                        <div class="text-muted" style="padding-left: 40px; margin-top: -10px;">
                                            Set The Customer Deposit Approval Matrix
                                        </div>
                                        <div style="padding-left: 40px; padding-top: 20px;">
                                            <field name="is_allow_customer_deposit_wa_notification" attrs="{'invisible': [('is_allow_customer_deposit_approval_matrix', '=', False)]}"/>
                                            <label string="Enable Customer Deposit Whatsapp Notification" for="is_allow_customer_deposit_wa_notification" attrs="{'invisible': [('is_allow_customer_deposit_approval_matrix', '=', False)]}" />
                                        </div>

                                        <div style="margin-top: 20px;">
                                            <field name="is_allow_vendor_deposit_approval_matrix"/>
                                            <label string="Vendor Deposit Approval Matrix" for="is_allow_vendor_deposit_approval_matrix" style="font-weight: bold;"/>
                                        </div>
                                        <div class="text-muted" style="padding-left: 40px; margin-top: -10px;">
                                            Set The Vendor Deposit Approval Matrix
                                        </div>
                                        <div style="padding-left: 40px; padding-top: 20px;">
                                            <field name="is_allow_vendor_deposit_wa_notification" attrs="{'invisible': [('is_allow_vendor_deposit_approval_matrix', '=', False)]}"/>
                                            <label string="Enable Vendor Deposit Whatsapp Notification" for="is_allow_vendor_deposit_wa_notification" attrs="{'invisible': [('is_allow_vendor_deposit_approval_matrix', '=', False)]}" />
                                        </div>

                                        <div style="margin-top: 20px;">
                                            <field name="is_allow_customer_multi_receipt_approval_matrix"/>
                                            <label string="Customer Multi Receipt Approval Matrix" for="is_allow_customer_multi_receipt_approval_matrix" style="font-weight: bold;"/>
                                        </div>
                                        <div class="text-muted" style="padding-left: 40px; margin-top: -10px;">
                                            Set The Customer Multi Receipt Approval Matrix
                                        </div>
                                        <div style="padding-left: 40px; padding-top: 20px;">
                                            <field name="is_allow_customer_multi_receipt_wa_notification" attrs="{'invisible': [('is_allow_customer_multi_receipt_approval_matrix', '=', False)]}"/>
                                            <label string="Enable Customer Multi Receipt Whatsapp Notification" for="is_allow_customer_multi_receipt_wa_notification" attrs="{'invisible': [('is_allow_customer_multi_receipt_approval_matrix', '=', False)]}" />
                                        </div>

                                        <div style="margin-top: 20px;">
                                            <field name="is_allow_vendor_multi_payment_approval_matrix"/>
                                            <label string="Vendor Multi Payment Approval Matrix" for="is_allow_vendor_multi_payment_approval_matrix" style="font-weight: bold;"/>
                                        </div>
                                        <div class="text-muted" style="padding-left: 40px; margin-top: -10px;">
                                            Set The Vendor Multi Payment Approval Matrix
                                        </div>
                                        <div style="padding-left: 40px; padding-top: 20px;">
                                            <field name="is_allow_vendor_multi_payment_wa_notification" attrs="{'invisible': [('is_allow_vendor_multi_payment_approval_matrix', '=', False)]}"/>
                                            <label string="Enable Vendor Multi Payment Whatsapp Notification" for="is_allow_vendor_multi_payment_wa_notification" attrs="{'invisible': [('is_allow_vendor_multi_payment_approval_matrix', '=', False)]}" />
                                        </div>
                                        
                                    </div>
                                    <div class="col-6 col-lg-6 o_setting_box" id="approval_matrix_setting">
                                        <div style="margin-top: 20px;">
                                            <field name="is_allow_budget_change_req_approval_matrix"/>
                                            <label string="Budget Change Request Approval Matrix" for="is_allow_budget_change_req_approval_matrix" style="font-weight: bold;"/>
                                        </div>
                                        <div class="text-muted" style="padding-left: 40px; margin-top: -10px;">
                                            Set The Budget Change Request Approval Matrix
                                        </div>
                                        <div style="padding-left: 40px; padding-top: 20px;">
                                            <field name="is_allow_budget_change_req_wa_notification" attrs="{'invisible': [('is_allow_budget_change_req_approval_matrix', '=', False)]}"/>
                                            <label string="Enable Budget Change Request Whatsapp Notification" for="is_allow_budget_change_req_wa_notification" attrs="{'invisible': [('is_allow_budget_change_req_approval_matrix', '=', False)]}" />
                                        </div>

                                        <div style="margin-top: 20px;">
                                            <field name="is_allow_purchase_budget_approval_matrix"/>
                                            <label string="Purchase Budget Approval Matrix" for="is_allow_purchase_budget_approval_matrix" style="font-weight: bold;"/>
                                        </div>
                                        <div class="text-muted" style="padding-left: 40px; margin-top: -10px;">
                                            Set The Purchase Budget Approval Matrix
                                        </div>
                                        <div style="padding-left: 40px; padding-top: 20px;">
                                            <field name="is_allow_purchase_budget_wa_notification" attrs="{'invisible': [('is_allow_purchase_budget_approval_matrix', '=', False)]}"/>
                                            <label string="Enable Purchase Budget Whatsapp Notification" for="is_allow_purchase_budget_wa_notification" attrs="{'invisible': [('is_allow_purchase_budget_approval_matrix', '=', False)]}" />
                                        </div>

                                        <div style="margin-top: 20px;">
                                            <field name="is_allow_purchase_budget_change_req_approval_matrix"/>
                                            <label string="Purchase Budget Change Request Approval Matrix" for="is_allow_purchase_budget_change_req_approval_matrix" style="font-weight: bold;"/>
                                        </div>
                                        <div class="text-muted" style="padding-left: 40px; margin-top: -10px;">
                                            Set The Purchase Budget Change Request Approval Matrix
                                        </div>
                                        <div style="padding-left: 40px; padding-top: 20px;">
                                            <field name="is_allow_purchase_budget_change_req_wa_notification" attrs="{'invisible': [('is_allow_purchase_budget_change_req_approval_matrix', '=', False)]}"/>
                                            <label string="Enable Purchase Budget Change Request Whatsapp Notification" for="is_allow_purchase_budget_change_req_wa_notification" attrs="{'invisible': [('is_allow_purchase_budget_change_req_approval_matrix', '=', False)]}" />
                                        </div>

                                        <!-- <div style="margin-top: 20px;">
                                            <field name="is_allow_cash_advance_approval_matrix"/>
                                            <label string="Cash Advance Approval Matrix" for="is_allow_cash_advance_approval_matrix" style="font-weight: bold;"/>
                                        </div> -->
                                        <!-- <div class="text-muted" style="padding-left: 40px; margin-top: -10px;">
                                            Set The Cash Advance Approval Matrix
                                        </div>
                                        <div style="padding-left: 40px; padding-top: 20px;">
                                            <field name="is_allow_cash_advance_wa_notification" attrs="{'invisible': [('is_allow_cash_advance_approval_matrix', '=', False)]}"/>
                                            <label string="Enable Cash Advance Whatsapp Notification" for="is_allow_cash_advance_wa_notification" attrs="{'invisible': [('is_allow_cash_advance_approval_matrix', '=', False)]}" />
                                        </div> -->
                                       
                                        <div style="margin-top: 20px;">
                                            <field name="is_allow_other_expense_approval_matrix"/>
                                            <label string="Other Expense Approval Matrix" for="is_allow_other_expense_approval_matrix" style="font-weight: bold;"/>
                                        </div>
                                        <div class="text-muted text-muted" style="padding-left: 40px; margin-top: -10px;">
                                            Set The Other Expense Approval Matrix
                                        </div>
                                        <div style="padding-left: 40px; padding-top: 20px;">
                                            <field name="is_allow_other_expense_wa_notification" attrs="{'invisible': [('is_allow_other_expense_approval_matrix', '=', False)]}"/>
                                            <label string="Enable Other Expense Whatsapp Notification" for="is_allow_other_expense_wa_notification" attrs="{'invisible': [('is_allow_other_expense_approval_matrix', '=', False)]}" />
                                        </div>

                                        <div style="margin-top: 20px;">
                                            <field name="is_allow_other_income_approval_matrix"/>
                                            <label string="Other Income Approval Matrix" for="is_allow_other_income_approval_matrix" style="font-weight: bold;"/>
                                        </div>
                                        <div class="text-muted text-muted" style="padding-left: 40px; margin-top: -10px;">
                                            Set The Other Income Approval Matrix
                                        </div>
                                        <div style="padding-left: 40px; padding-top: 20px;">
                                            <field name="is_allow_other_income_wa_notification" attrs="{'invisible': [('is_allow_other_income_approval_matrix', '=', False)]}"/>
                                            <label string="Enable Other Income Whatsapp Notification" for="is_allow_other_income_wa_notification" attrs="{'invisible': [('is_allow_other_income_approval_matrix', '=', False)]}" />
                                        </div>


                                    </div>
                                </div>
                            </group>

                          
                        </sheet>
                    </form>
                </field>
            </record>


            <record id="accounting_setting_view_tree" model="ir.ui.view">
                <field name="name">accounting.setting.view.tree</field>
                <field name="model">accounting.config.settings</field>
                <field name="arch" type="xml">
                    <tree string="Accounting Settings" create="0" delete="0">
                        <field name="name" />
                    </tree>
                </field>
            </record>
    
        
    


    <record id="accounting_setting_action" model="ir.actions.act_window">
        <field name="name">Accounting Setting</field>
        <field name="res_model">accounting.config.settings</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>

    </record>

    <menuitem
            id="accounting_setting_root_menu"
            name="Accounting Settings"
            parent="account.menu_finance"
            sequence="999"/>
        

    
    <menuitem
        id="sub_setting_accounting"
        name="Settings"
        action="accounting_setting_action"
        parent="accounting_setting_root_menu"
        sequence="10"/>





    </data>


    

</odoo>
