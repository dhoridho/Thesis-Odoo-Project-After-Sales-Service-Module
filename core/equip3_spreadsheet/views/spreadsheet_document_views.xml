<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_spreadsheet_document_tree" model="ir.ui.view">
        <field name="name">view.spreadsheet.document.tree</field>
        <field name="model">spreadsheet.document</field>
        <field name="arch" type="xml">
            <tree string="Spreadsheet" js_class="spreadsheet_document_list">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_view_spreadsheet_document" model="ir.actions.act_window">
        <field name="name">Spreadsheet</field>
        <field name="res_model">spreadsheet.document</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="menu_action_view_spreadsheet_document" 
              action="action_view_spreadsheet_document" 
              name="Spreadsheet" 
              web_icon="equip3_spreadsheet,static/description/icon.svg"/>

</odoo>