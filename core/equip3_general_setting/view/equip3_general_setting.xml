<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_implementor_settings_view_form" model="ir.ui.view">
        <field name="name">general_setting_inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='recaptcha']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="base_implementor">
                    <div class="o_setting_left_pane">
                        <field name="implementor_setting" invisible="1"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.implementor.form.inherit.base.setup</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="0"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]/div[@data-key='general_settings']" position="before">
                <div class="app_settings_block" data-string="Implementor General Settings" string="Implementor General Settings" data-key="equip3_general_setting" groups="base.group_no_one">
                    <div id="implementor_general">
                        <h2>General</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="implementor_general">
                                <div class="o_setting_left_pane ">
                                    <field name="show_branch"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="show_branch"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="implementor_general_purchase">
                        <h2>Purchase</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="implementor_purchase">
                                <div class="o_setting_left_pane ">
                                    <field name="purchase"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label string="Purchase" for="purchase"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="implementor_general_sales">
                        <h2>Sales</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="implementor_sales">
                                <div class="o_setting_left_pane ">
                                    <field name="sales"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label string="Sales" for="sales"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="implementor_general_inventory">
                        <h2>Inventory</h2>
                        <div class="row mt16 o_settings_container ">
                            <div class="col-12 col-lg-6 o_setting_box" id="implementor_inventory">
                                <div class="o_setting_left_pane ">
                                    <field name="inventory"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label string="Inventory" for="inventory"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="implementor_general_accounting">
                        <h2>Accounting</h2>
                        <div class="row mt16 o_settings_container ">
                            <div class="col-12 col-lg-6 o_setting_box" id="implementor_accounting">
                                <div class="o_setting_left_pane ">
                                    <field name="accounting"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label string="Accounting" for="accounting"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="implementor_general_manufacturing">
                        <h2>Manufacturing</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 o_setting_box" id="implementor_manufacturing">
                                <div class="o_setting_left_pane ">
                                    <field name="manufacturing"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label string="Manufacturing" for="manufacturing"/>
                                </div>
                            </div>
                            <div class="col-12 o_setting_box" id="implementor_cutting"
                                attrs="{'invisible': [('manufacturing', '=', False)]}">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <div class="content-group">
                                        <field name="cutting" class="oe_inline"/>
                                        <label for="cutting"/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 o_setting_box" id="implementor_assembly">
                                <div class="o_setting_left_pane ">
                                    <field name="assembly"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label string="Assembly" for="assembly"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="implementor_general_central_kitchen">
                        <h2>Central Kitchen</h2>
                        <div class="row mt16 o_settings_container ">
                            <div class="col-12 col-lg-6 o_setting_box" id="implementor_central_kitchen">
                                <div class="o_setting_left_pane ">
                                    <field name="central_kitchen"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label string="Central Kitchen" for="central_kitchen"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="implementor_general_human_resource">
                        <h2>Human Resource</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="implementor_human_resource">
                                <div class="o_setting_left_pane ">
                                    <field name="human_resource"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label string="Human Resource" for="human_resource"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="implementor_general_pos">
                        <h2>POS</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="implementor_pos">
                                <div class="o_setting_left_pane">
                                    <field name="pos"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label string="POS" for="pos"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="implementor_general_mining">
                        <h2>Mining</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="implementor_mining">
                                <div class="o_setting_left_pane">
                                    <field name="mining"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label string="Mining" for="mining"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="implementor_general_agriculture">
                        <h2>Agriculture</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="implementor_agriculture">
                                <div class="o_setting_left_pane">
                                    <field name="agriculture"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label string="Agriculture" for="agriculture"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>