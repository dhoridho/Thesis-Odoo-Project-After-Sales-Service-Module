<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_users_form_inherit_branch" model="ir.ui.view">
        <field name="name">view_users_form_inherit_branch</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="branch.view_users_form_inherit_branch"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="attributes">
                <attribute name="js_class">user_form_view_reload</attribute>
            </xpath>
            <xpath expr="//field[@name='branch_ids']/parent::group" position="replace"/>
            <xpath expr="//field[@name='branch_id']/parent::group" position="replace"/>
            <xpath expr="//field[@name='company_id']/parent::group" position="attributes">
                <attribute name="attrs">{}</attribute>
            </xpath>
            <xpath expr="//field[@name='company_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
            </xpath>
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="show_branch" invisible="1"/>
                <field name="is_superuser" invisible="1"/>
                <field name="branch_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}" domain="[('company_id', 'in', company_ids)]"/>
                <field name="branch_id" attrs="{'required': [('is_superuser', '=', False)]}" options="{'no_create': True, 'no_create_edit': True}" domain="[('company_id', '=', company_id), ('id', 'in', branch_ids)]"/>
            </xpath>
        </field>
    </record>

    <record id="branch_res_branch_view_form" model="ir.ui.view">
        <field name="name">branch_res_branch_view_form</field>
        <field name="model">res.branch</field>
        <field name="inherit_id" ref="branch.branch_res_branch_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="attributes">
                <attribute name="create">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>