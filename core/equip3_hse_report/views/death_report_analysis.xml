<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="employee_death_report_view_pivot" model="ir.ui.view">
            <field name="name">death.report.pivot</field>
            <field name="model">incident.report.employee</field>
            <field name="arch" type="xml">
                <pivot string="Employee Death Report Analysis" sample="1">
                    <field name="date_of_accident" string="Date of Death" type="row"/>
                    <field name="incident_category_id" string="Cause of Death Category" type="col"/>
                </pivot>
            </field>
        </record>

        <record id="employee_death_action_analysis" model="ir.actions.act_window">
            <field name="name">Death Report Analysis</field>
            <field name="res_model">incident.report.employee</field>
            <field name="view_mode">pivot</field>
            <field name="domain">[('death_report', '=', True)]</field>
            <field name="view_ids" eval="[
                (5, 0, 0),
                (0, 0, {'view_mode': 'pivot', 'view_id': ref('employee_death_report_view_pivot')})]"/>
            <field name="context"></field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No data yet!
                </p>
            </field>
        </record>

        <!-- Menu Configuration -->
        <menuitem id="death_analysis_menu"
                  name="Death Report Analysis"
                  parent="equip3_hse_report.hse_report_menu"
                  action="employee_death_action_analysis"
                  sequence="2"/>
    </data>
</odoo>
