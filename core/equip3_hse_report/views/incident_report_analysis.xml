<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="employee_incident_report_view_pivot" model="ir.ui.view">
            <field name="name">incident.report.pivot</field>
            <field name="model">incident.report.employee</field>
            <field name="arch" type="xml">
                <pivot string="Employee Incident Report Analysis" sample="1">
                    <field name="incident_category_id" type="row"/>
                    <field name="state" type="col"/>
                    <field name="type" type="col"/>
                </pivot>
            </field>
        </record>

        <record id="employee_incident_action_analysis" model="ir.actions.act_window">
            <field name="name">Incident Report Analysis</field>
            <field name="res_model">incident.report.employee</field>
            <field name="view_mode">pivot</field>
            <field name="view_ids" eval="[
                (5, 0, 0),
                (0, 0, {'view_mode': 'pivot', 'view_id': ref('employee_incident_report_view_pivot')})]"/>
            <field name="context"></field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No data yet!
                </p>
            </field>
        </record>

        <!-- Menu Configuration -->
        <menuitem id="hse_report_menu"
            name = "Reports"
            parent="equip3_hse_masterdata.human_safety_environment_main"
            sequence="2"
        />

        <menuitem id="incident_analysis_menu"
                  name="Incident Report Analysis"
                  parent="equip3_hse_report.hse_report_menu"
                  action="employee_incident_action_analysis"
                  sequence="1"/>
    </data>
</odoo>
