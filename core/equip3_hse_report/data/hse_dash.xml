<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- HSE -->

        <record id="ks_hse_dash" model="ks_dashboard_ninja.board_template">
            <field name="name">hse_ks_dashboard_default_template</field>
            <field name="ks_gridstack_config">[
                {"item_id":"equip3_hse_report.ks_hse_item_1", "data": {"x": 0, "y": 0, "w": 3, "h":
                3}},
                {"item_id":"equip3_hse_report.ks_hse_item_2", "data": {"x": 3, "y": 0, "w": 3, "h":
                3}},
                {"item_id":"equip3_hse_report.ks_hse_item_3", "data": {"x": 6, "y": 0, "w": 3, "h":
                3}},
                {"item_id":"equip3_hse_report.ks_hse_item_4", "data": {"x": 9, "y": 0, "w": 3, "h":
                3}},
                {"item_id":"equip3_hse_report.ks_hse_item_5", "data": {"x": 0, "y": 4, "w": 6, "h":
                6}},
                {"item_id":"equip3_hse_report.ks_hse_item_6", "data": {"x": 7, "y": 4, "w": 6, "h":
                6}},
                {"item_id":"equip3_hse_report.ks_hse_item_7", "data": {"x": 0, "y": 10, "w": 6, "h":
                6}},
                {"item_id":"equip3_hse_report.ks_hse_item_8", "data": {"x": 7, "y": 10, "w": 6, "h":
                6}}
                ]
            </field>
            <field name="ks_item_count">11</field>
        </record>
        
        <record id="ks_hse_item_1" model="ks_dashboard_ninja.item">
            <field name="name">Multiple Incident Reports</field>
            <field name="ks_dashboard_item_type">ks_tile</field>
            <field name="ks_record_count_type">count</field>
            <field name="ks_model_id" eval="ref('equip3_hse_operation.model_incident_report_multiple')"/>
            <!-- <field name="ks_domain">[('department_type', '=', 'project')]</field> -->
            <field name="ks_default_icon">building-o</field>
            <field name="ks_dashboard_item_theme">blue</field>
            <field name="ks_background_color">#ffffff,0.99</field>
            <field name="ks_font_color">#000000,0.99</field>
            <field name="ks_default_icon_color">#357cb8,0.99</field>
            <field name="ks_button_color">#ffffff,0.99</field>
            <field name="ks_layout">layout6</field>
            <field name="ks_auto_update_type">ks_live_update</field>
            <field name="ks_update_items_data">15000</field>
        </record>

        <record id="ks_hse_item_2" model="ks_dashboard_ninja.item">
            <field name="name">Employee Incident Reports</field>
            <field name="ks_dashboard_item_type">ks_tile</field>
            <field name="ks_record_count_type">count</field>
            <field name="ks_model_id" eval="ref('equip3_hse_operation.model_incident_report_employee')"/>
            <!-- <field name="ks_domain">[('state', 'in', ('sale','done')), ('department_type', '=', 'project')]</field> -->
            <field name="ks_default_icon">handshake-o</field>
            <field name="ks_dashboard_item_theme">blue</field>
            <field name="ks_background_color">#ffffff,0.99</field>
            <field name="ks_font_color">#000000,0.99</field>
            <field name="ks_default_icon_color">#f3994b,0.99</field>
            <field name="ks_button_color">#000000,0.99</field>
            <field name="ks_layout">layout6</field>
            <field name="ks_auto_update_type">ks_live_update</field>
            <field name="ks_update_items_data">15000</field>
        </record>

        <record id="ks_hse_item_3" model="ks_dashboard_ninja.item">
            <field name="name">Investigation Reports</field>
            <field name="ks_dashboard_item_type">ks_tile</field>
            <field name="ks_record_count_type">count</field>
            <field name="ks_model_id" eval="ref('equip3_hse_operation.model_investigation_report_employee')"/>
            <!-- <field name="ks_domain">[('state', 'not in', ('cancelled','reject')), ('department_type', '=', 'project')]</field> -->
            <field name="ks_default_icon">list-alt</field>
            <field name="ks_dashboard_item_theme">yellow</field>
            <field name="ks_background_color">#ffffff,0.99</field>
            <field name="ks_font_color">#000000,0.99</field>
            <field name="ks_default_icon_color">#44bf49,0.99</field>
            <field name="ks_button_color">#000000,0.99</field>
            <field name="ks_layout">layout6</field>
            <field name="ks_auto_update_type">ks_live_update</field>
            <field name="ks_update_items_data">15000</field>
        </record>
        
        <record id="ks_hse_item_4" model="ks_dashboard_ninja.item">
            <field name="name">Action Checklist</field>
            <field name="ks_dashboard_item_type">ks_tile</field>
            <field name="ks_record_count_type">count</field>
            <field name="ks_model_id" eval="ref('equip3_hse_operation.model_action_checklist')"/>
            <!-- <field name="ks_domain">[('state', 'not in', ('cancelled','rejected')), ('department_type', '=', 'project')]</field> -->
            <field name="ks_default_icon">bar-chart</field>
            <field name="ks_dashboard_item_theme">yellow</field>
            <field name="ks_background_color">#ffffff,0.99</field>
            <field name="ks_font_color">#000000,0.99</field>
            <field name="ks_default_icon_color">#d95551,0.99</field>
            <field name="ks_button_color">#000000,0.99</field>
            <field name="ks_layout">layout6</field>
            <field name="ks_auto_update_type">ks_live_update</field>
            <field name="ks_update_items_data">15000</field>
        </record>

        <record id="ks_hse_item_5" model="ks_dashboard_ninja.item">
            <field name="name">Incident Report - Count</field>
            <field name="ks_model_id" eval="ref('equip3_hse_operation.model_incident_report_employee')"/>
            <field name="ks_dashboard_item_type">ks_line_chart</field>
            <field name="ks_data_calculation_type">custom</field>
            <field name="ks_chart_data_count_type">count</field>
            <field name="ks_chart_relation_groupby" ref="equip3_hse_operation.field_incident_report_employee__date_of_accident"/>
            <field name="ks_chart_date_groupby">month</field>
            <field name="ks_fill_temporal" eval="False"/>
            <field name="ks_record_data_limit_visibility" eval="True"/>
            <field name="ks_date_filter_field" ref="equip3_hse_operation.field_incident_report_employee__date_of_accident"/>
            <field name="ks_date_filter_selection">ls_past_until_now</field>
            <field name="ks_data_format">global</field>
            <field name="ks_chart_item_color">neon</field>
            <field name="ks_hide_legend" eval="False"/>
            <field name="ks_show_records" eval="False"/>
            <field name="ks_multiplier_active" eval="False"/>
            <field name="ks_auto_update_type">ks_live_update</field>
            <field name="ks_show_live_pop_up">1</field>
        </record>

        
        <record id="ks_hse_item_6" model="ks_dashboard_ninja.item">
            <field name="name">Employee Incidents Per Category - This Month</field>
            <field name="ks_model_id" eval="ref('equip3_hse_operation.model_incident_report_employee')"/>
            <field name="ks_dashboard_item_type">ks_bar_chart</field>
            <field name="ks_data_calculation_type">custom</field>
            <field name="ks_chart_data_count_type">count</field>
            <field name="ks_chart_relation_groupby" ref="equip3_hse_operation.field_incident_report_employee__incident_category_id"/>
            <field name="ks_sort_by_field" ref="equip3_hse_operation.field_incident_report_employee__write_date"/>
            <field name="ks_sort_by_order">DESC</field>
            <field name="ks_record_data_limit_visibility" eval="True"/>
            <field name="ks_date_filter_field" ref="equip3_hse_operation.field_incident_report_employee__date_of_accident"/>
            <field name="ks_date_filter_selection">t_month</field>
            <field name="ks_data_format">global</field>
            <field name="ks_chart_item_color">neon</field>
            <field name="ks_hide_legend" eval="False"/>
            <field name="ks_show_records" eval="False"/>
            <field name="ks_multiplier_active" eval="False"/>
            <field name="ks_auto_update_type">ks_live_update</field>
            <field name="ks_show_live_pop_up">1</field>
        </record>

        <record id="ks_hse_item_7" model="ks_dashboard_ninja.item">
            <field name="name">Employees - This Year</field>
            <field name="ks_model_id" eval="ref('equip3_hse_operation.model_incident_report_employee')"/>
            <field name="ks_dashboard_item_type">ks_horizontalBar_chart</field>
            <field name="ks_data_calculation_type">custom</field>
            <field name="ks_chart_data_count_type">count</field>
            <field name="ks_chart_relation_groupby" ref="equip3_hse_operation.field_incident_report_employee__employee_id"/>
            <field name="ks_sort_by_field" ref="equip3_hse_operation.field_incident_report_employee__date_of_accident"/>
            <field name="ks_sort_by_order">DESC</field>
            <field name="ks_record_data_limit_visibility" eval="True"/>
            <field name="ks_record_data_limit">7</field>
            <field name="ks_date_filter_field" ref="equip3_hse_operation.field_incident_report_employee__date_of_accident"/>
            <field name="ks_date_filter_selection">t_year</field>
            <field name="ks_data_format">global</field>
            <field name="ks_chart_item_color">neon</field>
            <field name="ks_hide_legend" eval="False"/>
            <field name="ks_show_records" eval="False"/>
            <field name="ks_multiplier_active" eval="False"/>
            <field name="ks_auto_update_type">ks_live_update</field>
            <field name="ks_show_live_pop_up">1</field>
        </record>

        <record id="ks_hse_item_8" model="ks_dashboard_ninja.item">
            <field name="name">Investigation Status</field>
            <field name="ks_model_id" eval="ref('equip3_hse_operation.model_investigation_report_employee')"/>
            <field name="ks_dashboard_item_type">ks_pie_chart</field>
            <field name="ks_data_calculation_type">custom</field>
            <field name="ks_chart_data_count_type">count</field>
            <field name="ks_chart_relation_groupby" ref="equip3_hse_operation.field_investigation_report_employee__state"/>
            <field name="ks_date_filter_field" ref="equip3_hse_operation.field_investigation_report_employee__create_date"/>
            <field name="ks_date_filter_selection">t_year</field>
            <field name="ks_data_format">global</field>
            <field name="ks_chart_item_color">neon</field>
            <field name="ks_hide_legend" eval="True"/>
            <field name="ks_show_records" eval="False"/>
            <field name="ks_multiplier_active" eval="False"/>
            <field name="ks_auto_update_type">ks_live_update</field>
            <field name="ks_show_live_pop_up">1</field>
        </record>
        
        <record model="ks_dashboard_ninja.board" id="hse_dashboard">
            <field name="name">HSE Dashboard</field>
            <field name="ks_dashboard_menu_name">HSE Dashboard</field>
            <field name="ks_dashboard_top_menu_id" ref="equip3_hse_masterdata.human_safety_environment_main"/>
            <field name="ks_dashboard_default_template" eval="ref('ks_hse_dash')"/>
            <field name="ks_dashboard_active" eval="True"/>
            <!-- <field name="ks_dashboard_group_access" eval="[ref('abs_construction_management.group_construction_manager')]"/> -->
            <field name="ks_dashboard_menu_sequence" eval="-1"/>
        </record>

