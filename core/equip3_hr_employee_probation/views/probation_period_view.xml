<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="employee_probation_period_form" model="ir.ui.view">
        <field name="name">employee.probation.period.form</field>
        <field name="model">employee.probation.period</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="department_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="employee_probation_period_tree" model="ir.ui.view">
        <field name="name">employee.probation.period.tree</field>
        <field name="model">employee.probation.period</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="company_id"/>
                <field name="department_ids" widget="many2many_tags"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </tree>
        </field>
    </record>

    <record id="employee_probation_period_search" model="ir.ui.view">
        <field name="name">employee.probation.period.search</field>
        <field name="model">employee.probation.period</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="action_employee_probation_period" model="ir.actions.act_window">
        <field name="name">Employee Probation Period</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">employee.probation.period</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- <menuitem name="Employee Probation Period"
              id="menu_employee_probation_period"
              parent="hr.hr_menu_configuration"
              action="action_employee_probation_period"/> -->
</odoo>
