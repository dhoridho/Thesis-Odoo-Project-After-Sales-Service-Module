<odoo>
    <record id="act_view_probation" model="ir.actions.act_window">
        <field name="name">Employee Probation</field>
        <field name="res_model">employee.probation</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('employee_id', 'in', [active_id])]</field>
    </record>
    <record id="dev_employee_probation.form_employee_dev_employee_probation_inherited" model="ir.ui.view">
        <field name="name">form.employee.dev.employee.probation.inherited</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="action" name="%(act_view_probation)d"
                        context="{'search_default_employee_id': active_id}"
                        class="oe_stat_button" icon="o-hm-smart-hrm-view-probation">
                    <span>View Probation</span>
                </button>
            </xpath>
        </field>
    </record>
</odoo>