<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="form_dev_employee_probation_inherit" model="ir.ui.view">
            <field name="name">form_dev_employee_probation.inherit</field>
            <field name="model">employee.probation</field>
            <field name="priority" eval="99"/>
            <field name="inherit_id" ref="dev_employee_probation.form_dev_employee_probation"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet" position="before">
                    <header>
                        <button name="action_submit" string="Submit"  attrs="{'invisible':['|',('show_submit','=',False),('state','!=','draft')]}" type="object" class="oe_highlight"/>
                        <button name="action_pass" string="Pass"  attrs="{'invisible':[('state','!=','done')]}" type="object" class="oe_highlight" groups="equip3_hr_employee_access_right_setting.group_hr_officer,equip3_hr_employee_access_right_setting.group_hr_manager,hr.group_hr_manager"/>
                        <button name="action_not_pass" string="Fail"  attrs="{'invisible':[('state','!=','done')]}" type="object" class="oe_highlight" groups="equip3_hr_employee_access_right_setting.group_hr_officer,equip3_hr_employee_access_right_setting.group_hr_manager,hr.group_hr_manager"/>
                        <button name="update_contract" string="Update Contract"  attrs="{'invisible':['|',('state','!=','pass'),('show_update_contract','=',False)]}" type="object" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,submitted,on_going,done"/>
                        <field name="show_submit" invisible="1"/>
                        <field name="show_update_contract" invisible="1"/>
                    </header>
                </xpath>
                <xpath expr="//field[@name='employee_id']" position="attributes">
                    <attribute name="attrs">{'readonly':[('state','!=','draft')]}</attribute>
                    <attribute name="options">{'no_open': True, 'no_create': True, 'no_create_edit': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='start_date']" position="attributes">
                    <attribute name="attrs">{'readonly':[('state','!=','draft')]}</attribute>
                    <attribute name="force_save">1</attribute>
                </xpath>
                <xpath expr="//field[@name='end_date']" position="attributes">
                    <attribute name="attrs">{'readonly':[('state','!=','draft')]}</attribute>
                    <attribute name="force_save">1</attribute>
                </xpath>
                <xpath expr="//page[1]/field[@name='review_ids']" position="attributes">
                    <attribute name="attrs">{'readonly':[('state','in',['pass','not_pass'])]}</attribute>
                </xpath>
                <xpath expr="//page[2]/field[@name='description']" position="attributes">
                    <attribute name="attrs">{'readonly':[('state','in',['pass','not_pass'])]}</attribute>
                </xpath>
                <xpath expr="//field[@name='employee_id']" position="after">
                    <field name="contract_id" required="1" attrs="{'readonly':[('state','!=','draft')]}" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                </xpath>
                <xpath expr="//field[@name='employee_email']" position="replace">
                    <field name="employee_email" readonly="1" force_save="1"/>
                </xpath>
                <xpath expr="//field[@name='department_id']" position="replace">
                    <field name="department_id" readonly="1" force_save="1"/>
                </xpath>
                <xpath expr="//field[@name='manager_id']" position="replace">
                    <field name="manager_id" readonly="1" force_save="1"/>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="replace">
                    <field name="company_id" readonly="1" force_save="1"/>
                </xpath>
                <xpath expr="//field[@name='end_date']" position="after">
                    <field name="reviewer_ids" widget="many2many_tags" required="1" attrs="{'readonly':[('state','!=','draft')]}" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                </xpath>
            </field>
        </record>

        <record id="tree_dev_employee_probation_inherit" model="ir.ui.view">
            <field name="name">tree.dev.employee.probation.inherit</field>
            <field name="model">employee.probation</field>
            <field name="inherit_id" ref="dev_employee_probation.tree_dev_employee_probation"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='end_date']" position="after">
                    <field name="state"/>
                </xpath>
            </field>
        </record>

        <record id="action_employee_probation_to_process" model="ir.actions.act_window">
            <field name="name">Employee Probation to Process</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">employee.probation</field>
            <field name="domain">[('state','!=','draft'),('reviewer_ids','in',uid)]</field>
            <field name="context">{'probation_reviewer':True}</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Employee Probation to Process"
              id="sub_menu_employee_probation_to_process"
              parent="dev_employee_probation.main_menu_employee_probation"
              action="action_employee_probation_to_process"
              sequence="2"/>
    </data>
</odoo>