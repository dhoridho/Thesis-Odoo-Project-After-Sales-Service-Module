<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="employee_probation_mass_form" model="ir.ui.view">
        <field name="name">employee.probation.mass.form</field>
        <field name="model">employee.probation.mass</field>
        <field name="arch" type="xml">
            <form string="Probation Form View">
                <header>
                    <button name="action_submit" string="Submit"  attrs="{'invisible':['|',('show_submit','=',False),('state','!=','draft')]}" type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,on_going,done"/>
                    <field name="show_submit" invisible="1"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1 class="o_row">
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group name="period">
                            <field name="period"/>
                            <field name="probation_period_id" attrs="{'invisible': [('period', '!=', 'with_masterdata')]}" />
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                        <group name="company">
                            <field name="company_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Employees" name="employees">
                            <field name="employee_ids">
                                <tree editable="bottom">
                                    <field name="number"/>
                                    <field name="name"/>
                                    <field name="department_id"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="state" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="employee_probation_mass_tree" model="ir.ui.view">
        <field name="name">employee.probation.mass.tree</field>
        <field name="model">employee.probation.mass</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="company_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="employee_probation_mass_search" model="ir.ui.view">
        <field name="name">employee.probation.mass.search</field>
        <field name="model">employee.probation.mass</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="action_employee_probation_mass" model="ir.actions.act_window">
        <field name="name">Mass Employee Probation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">employee.probation.mass</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No record found. Let's create one!
            </p>
            <p>
                Once you have created your record, it will be displayed.
            </p>
        </field>
    </record>
</odoo>
