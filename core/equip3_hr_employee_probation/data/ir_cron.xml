<odoo>
    <data>
        <record id="cron_auto_training" model="ir.cron">
            <field name="name">Cron Update State Employee Probation</field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="nextcall" eval="(DateTime.now()).strftime('%Y-%m-%d 23:00:00')" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="model_employee_probation"/>
            <field name="state">code</field>
            <field name="doall" eval="True"/>
            <field name="code">model.cron_update_state()</field>
        </record>
    </data>
</odoo>