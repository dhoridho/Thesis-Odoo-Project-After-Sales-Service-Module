<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="general_view_pos_order_tree" model="ir.ui.view">
        <field name="name">Orders</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="equip3_pos_general.retail_view_pos_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="before">
                <field name="gravio_log_id" optional="hide"/>
                <field name="log_adult_male_count"/>
                <field name="log_adult_female_count"/>
                <field name="log_child_male_count"/>
                <field name="log_child_female_count"/>
                <field name="log_adult_count"/>
                <field name="log_child_count"/>
                <field name="log_male_count"/>
                <field name="log_female_count"/>
                <field name="log_total_count"/>
            </xpath>
        </field>
    </record>

    <record id="view_pos_order_pivot" model="ir.ui.view">
        <field name="name">view.pos.order.pivot</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_pivot"/>
        <field name="arch" type="xml">
            <xpath expr="//pivot" position="inside">
                <field name="log_adult_male_count" type="measure"/>
                <field name="log_adult_female_count" type="measure"/>
                <field name="log_child_male_count" type="measure"/>
                <field name="log_child_female_count" type="measure"/>
                <field name="log_adult_count" type="measure"/>
                <field name="log_child_count" type="measure"/>
                <field name="log_male_count" type="measure"/>
                <field name="log_female_count" type="measure"/>
                <field name="log_total_count" type="measure"/>
            </xpath>
        </field>
    </record>

</odoo>