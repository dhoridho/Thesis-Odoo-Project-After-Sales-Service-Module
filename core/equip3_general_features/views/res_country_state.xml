<odoo>

<data>


    <record id="base.view_country_state_tree" model="ir.ui.view">
        <field name="name">res.country.state.tree</field>
        <field name="model">res.country.state</field>
        <field name="arch" type="xml">
            <tree string="State" >
                <field name="name"/>
                <field name="code"/>
                <field name="country_id" options="{'no_create': True}"/>
            </tree>
        </field>
    </record>

    <record id="res_country_state_inherit" model="ir.ui.view">
        <field name="name">res.country.state.general.setting</field>
        <field name="model">res.country.state</field>
        <field name="inherit_id" ref="base.view_country_state_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="after">
                <label  for="city_ids" name="City"/>
                <field name="city_ids" nolabel="1"  context="{'form_view_ref':'equip3_general_setting.res_city_form_o2m_view'}" >
                    <tree>
                        <field name="name" />
                        <field name="city_code" />
                        <field name="state_id" invisible="1" />
                    </tree>


                </field>
               
            </xpath>
        </field>
    </record>



</data>


</odoo>