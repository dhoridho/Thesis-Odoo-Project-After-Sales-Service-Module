<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="qiscus_wa_variable_view_form" model="ir.ui.view">
            <field name="name">qiscus.wa.variable.view.form</field>
            <field name="model">qiscus.wa.variable</field>
            <field name="arch" type="xml">
                <form >
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                            <field name="description" required="1"/>
                            <field name="category_id" required="1"/>
                            <field name="model_id" attrs="{'required':[('special_var','=',False)],'invisible':[('special_var','=',True)]}"/>
                            <field name="field_id" attrs="{'required':[('special_var','=',False)],'invisible':[('special_var','=',True)]}"/>
                            <field name="special_var" invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="qiscus_wa_variable_view_tree" model="ir.ui.view">
            <field name="name">qiscus.wa.variable.view.tree</field>
            <field name="model">qiscus.wa.variable</field>
            <field name="arch" type="xml">
                <tree string="Variable">
                     <field name="name" />
                    <field name="description" />
                    <field name="category_id" />
                    <field name="model_id"/>
                    <field name="field_id"/>
                </tree>
            </field>
        </record>

        <record id="qiscus_wa_variable_name_action" model="ir.actions.act_window">
            <field name="name">Variable</field>
            <field name="res_model">qiscus.wa.variable</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>


              <menuitem id="variable_message_template_menu_id"
                    name="Variable"
                    action="qiscus_wa_variable_name_action"
                    parent="wa_integration_menu_settings"
                    sequence="6"
            />
    
        
    
    </data>
    

</odoo>
