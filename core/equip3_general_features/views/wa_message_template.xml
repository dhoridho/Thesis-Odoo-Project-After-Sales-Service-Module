<odoo>
    <data>
    
    
        <record id="wa_message_template_form" model="ir.ui.view">
            <field name="name">master.template.message.form</field>
            <field name="model">master.template.message</field>
            <field name="arch" type="xml">
                <form string="Whatsapp Template">
                    <header>
                        <button string="Test Template" name="action_test_template" type="object"/>
                    
                    </header>
                    <sheet>
                        
                            <group>
                                <group>
                                    <field name="name"  required="1"/>
                                    <!-- <field name="message" required="1" /> -->
                                    <field name="category" required="1" />
                                    <field name="namespace"  />
                                </group>
                                <group>
                                    <field name="broadcast_template_id"  domain="[('category','=',category),('template_id.status','=','1')]" required="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                    <field name="content"  />
                                    <field name="use_header" string="Use Header" readonly="1"  force_save="1"/>
                                    <field name="header_type" string="Header Type" attrs="{'invisible':[('use_header','=',False)],'required':[('use_header','=',True)]}"  readonly="1"  force_save="1"/>
                                    <field name="header_text"  string="Header Text" attrs="{'invisible':['|',('header_type','!=','text'),('use_header','=',False)],'required':[('header_type','=','text')]}" />
                                    <field name="file_type" widget="radio"  string="Media Type" attrs="{'invisible':['|',('header_type','!=','media'),('use_header','=',False)],'required':[('header_type','=','media')]}" readonly="1"  force_save="1"/>
                                    <field name="link_file"  string="Link" attrs="{'invisible':['|',('header_type','!=','media'),('use_header','=',False)],'required':[('header_type','=','media')]}"/>
                                </group>
                            </group>

                            <notebook>
                                <page name="message_line_ids" string="Messages">
                                    <field name="message_line_ids" >
                                        <tree >
                                            <field name="sequence" widget="handle"/>
                                            <field name="sequence_show" string="Sequence"/>
                                            <field name="message" />
                                        </tree>
                                    
                                    </field>
                                    
                                </page>
                            </notebook>

                            <notebook>
                                <page name="wa_variable_ids" string="Variable">
                                <group>
                                    <group>

                                        <field name="variable_category_id" />   
                                    </group>
                                </group>
                                    <field name="wa_variable_ids" readonly="1" force_save="1">
                                        <tree create="0" edit="0" delete="0">
                                            <field name="name" />
                                            <field name="description" />
                                            <field name="category_id" />
                                            <field name="model_id"/>
                                            <field name="field_id"/>
                                        </tree>
                                    
                                    </field>
                                    
                                </page>
                            </notebook>
                        
                    </sheet>


                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
    
            </field>
        </record>
    
     <record id="wa_message_template_tree_view" model="ir.ui.view">
            <field name="name">master.template.message.tree</field>
            <field name="model">master.template.message</field>
            <field name="arch" type="xml">
                <tree string="Whatsapp Template">
                    <field name="name"/>
                    <!-- <field name="message" /> -->
                </tree>
            </field>
        </record>


        <record id="master_message_qiscuss_name_view_form" model="ir.ui.view">
            <field name="name">master.message.qiscuss.view.form</field>
            <field name="model">master.message.qiscuss</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group >
                                <field name="message" />
                                
                            </group>
                            
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="wa_message_template_filter" model="ir.ui.view">
            <field name="name">master.template.message.search</field>
            <field name="model">master.template.message</field>
            <field name="arch" type="xml">
                <search string="Search Manpower Planning Period">
                    <field name="name" />
               </search>
            </field>
        </record>
    
     <record id="wa_message_template_action" model="ir.actions.act_window">
            <field name="name">Whatsapp Template</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">master.template.message</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                  Create a new Whatsapp Template
                </p>
            </field>
        </record>
    
    
    
      <menuitem id="wa_message_template_menu_id"
            name="Whatsapp Template"
            action="wa_message_template_action"
            parent="wa_integration_menu_settings"
            sequence="1"
            />



        
        
        
    
    </data>
    
    
    </odoo>