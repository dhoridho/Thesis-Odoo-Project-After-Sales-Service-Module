<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_form_product_product" model="ir.ui.view">
        <field name="name">product.product.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <field name="categ_id" position="after">
                <field name="product_prefix" invisible="1"/>
                <field name="is_generate_product" invisible="1"/>
                <field name="category_prefix_preference" invisible="1"/>
                <field name="is_invisible_standard_price" invisible="1"/>
                <field name="is_readonly_standard_price" invisible="1"/>
            </field>
            <field name="default_code" position="replace"/>
            <xpath expr="//div[@name='options']" position="before">
                <group>
                    <field name="default_code" force_save="1" attrs="{'readonly' : [('is_generate_product', '=', True)]}"/>
                </group>
            </xpath>
            <xpath expr="//page[@name='general_information']" position="after">
                <page name="Alternative" string="Alternative">
                    <group>
                        <field name="alternative_product_ids">
                            <tree>
                                <field name="name"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
            <xpath expr="//button[@name='action_update_quantity_on_hand']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
			<xpath expr="//label[@for='standard_price']" position="attributes">
                <attribute name="attrs">{
                    'invisible': [('is_invisible_standard_price', '=', True)]
                }</attribute>
            </xpath>
            <xpath expr="//div[@name='standard_price_uom']" position="attributes">
                <attribute name="attrs">{
                    'invisible': [('is_invisible_standard_price', '=', True)]
                }</attribute>
            </xpath>
            <xpath expr="//field[@name='standard_price']" position="attributes">
                <attribute name="attrs">{
                    'readonly': [('is_readonly_standard_price', '=', True)]
                }</attribute>
            </xpath>
        </field>
    </record>

