<?xml version="1.0" encoding="utf-8"?>
<odoo>



    <record id="view_form_res_company" model="ir.ui.view">
        <field name="name">res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='city']" position="replace">
                <field name="city_id" class="o_address_state" placeholder="City" />
            </xpath>
            <xpath expr="//field[@name='company_registry']" position="after">
                <field name="tax_cutter_name"/>
                <field name="tax_cutter_npwp" widget="mask" data-inputmask-mask="99.999.999.9-999.999"/>
            </xpath>
            <xpath expr="//sheet" position="after">
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Technical Information" groups="base.group_no_one">
                    <group>
                        <field name="create_date" />
                        <field name="create_uid"/>
                        <!-- <field name="accounting"/> -->
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
