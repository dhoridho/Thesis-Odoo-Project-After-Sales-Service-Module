<odoo>
    <data>
    
    
        <record id="qiscus_wa_template_form" model="ir.ui.view">
            <field name="name">qiscus.wa.template.form</field>
            <field name="model">qiscus.wa.template</field>
            <field name="arch" type="xml">
                <form string="Qiscus Template" create="0" delete="0" edit="0">
                    <sheet>
                        
                            <group>
                                <group>
                                    <field name="name"  required="1"/>
                                    <field name="namespace" required="1" />
                                    <field name="qiscus_template_id" required="1" invisible="1"/>
                                </group>
                                <group >
                                    <field name="category" required="1" />
                                    <field name="reject_reason" />
                                    <field name="status" />
                                    
                                </group>
                            </group>
                            <notebook>
                                <page name="content_ids_page" string="Content">
                                    <field name="content_ids" >

                                        <tree>
                                            <field name="language" />
                                            <field name="content" />
                                            
                                        </tree>
                                    </field>
                                    
                                </page>
                            </notebook>
                            
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
    
            </field>
        </record>
    
     <record id="qiscus_wa_template_tree_view" model="ir.ui.view">
            <field name="name">qiscus.wa.template.tree</field>
            <field name="model">qiscus.wa.template</field>
            <field name="arch" type="xml">
                <tree string="Qiscus Template" create="0" delete="1" edit="0">
                    <field name="name"  />
                    <field name="namespace" />
                    <field name="category" />
                    <field name="qiscus_template_id"  invisible="1"/>
                     <field name="reject_reason" />
                    <field name="status" />
                </tree>
            </field>
        </record>


        <record id="qiscu_wa_template_filter" model="ir.ui.view">
            <field name="name">qiscus.wa.template.search</field>
            <field name="model">qiscus.wa.template</field>
            <field name="arch" type="xml">
                <search string="Search Qiscus Template">
                    <field name="name" />
                    <field name="category" />
               </search>
            </field>
        </record>
    
     <record id="qiscus_wa_template_action" model="ir.actions.act_window">
            <field name="name">Broadcast Template</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">qiscus.wa.template</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                  Syncronize Template
                </p>
            </field>
        </record>
    
    
    
      <menuitem id="wa_integration_menu_settings"
            name="Whatsapp Integration"
            parent="base.menu_administration"
            sequence="70"
            />

      <menuitem id="broadcast_message_template_menu_id"
            name="Broadcast Template"
            action="qiscus_wa_template_action"
            parent="wa_integration_menu_settings"
            sequence="5"
            />
        
        
    
    </data>
    
    
    </odoo>