<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_form_res_branch" model="ir.ui.view">
        <field name="name">res.branch.form</field>
        <field name="model">res.branch</field>
        <field name="inherit_id" ref="branch.branch_res_branch_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="after">
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </xpath>
            <xpath expr="//field[@name='address']" position="after">
                <label for="street" string="Address"/>
                <div class="o_address_format">
                    <field name="street" placeholder="Street..." class="o_address_street"/>
                    <field name="street_2" placeholder="Street 2..." class="o_address_street"/>
                    <field name="city" placeholder="City" class="o_address_city"/>
                    <field name="state_id" class="o_address_state" placeholder="State" options="{&quot;no_open&quot;: True}"/>
                    <field name="country_id" placeholder="Country" class="o_address_zip"/>
                    <field name="zip_code" placeholder="ZIP" class="o_address_country" options="{&quot;no_open&quot;: True}"/>
                </div>
            </xpath>
            <xpath expr="//field[@name='address']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//group" position="after">
                <notebook>
                    <page string="Technical Information" groups="base.group_no_one">
                        <group>
                            <field name="create_date" />
                            <field name="create_uid"/>
                        </group>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>

</odoo>
