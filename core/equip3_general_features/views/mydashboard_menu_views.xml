<odoo>
    <!--  My Dashboard to Central Dashboard  -->
    <menuitem name="Central Dashboard"
              id="ks_dashboard_ninja.board_menu_root"
              web_icon="ks_dashboard_ninja,static/description/icon.png"
              action="ks_dashboard_ninja.board_dashboard_action_window"/>

    <!--  Root Menu  -->
    <menuitem name="Central Dashboard"
              id="central_central_dashboard_dashboard_root"
              sequence="-10"
              parent="ks_dashboard_ninja.board_menu_root"
              action="board.open_board_my_dash_action"/>

    <menuitem name="KPI Scorecard"
              id="central_dashboard_kpi_scorecard_menu_root"
              sequence="1"
              parent="ks_dashboard_ninja.board_menu_root"
              action="kpi_scorecard.kpi_scorecard_line_action"/>

    <menuitem name="Custom BI Views"
              id="approval_central_dashboard"
              sequence="2"
              parent="ks_dashboard_ninja.board_menu_root"
              action="bi_view_editor.action_bi_view_editor_view_form"/>

    <menuitem name="Dashboards"
              id="central_dashboard_dashboard_root"
              sequence="3"
              parent="ks_dashboard_ninja.board_menu_root"/>

    <menuitem name="Dashboards Configuration"
              id="central_dashboard_dashboard_configuration_root"
              sequence="4"
              parent="ks_dashboard_ninja.board_menu_root"/>

    <menuitem name="KPI"
              id="central_dashboard_kpi_root"
              sequence="5"
              parent="ks_dashboard_ninja.board_menu_root"/>

    <!--  Dashboards Submenu  -->
    <menuitem name="My Dashboard"
              id="central_dashboard_board_my_dash"
              parent="central_dashboard_dashboard_root"
              sequence="1"
              action="board.open_board_my_dash_action"/>

    <!--  Dashboard Configuration Group Submennu  -->
    <menuitem name="Configuration"
              id="central_dashboard_dashboard_configuration_submenu"
              parent="central_dashboard_dashboard_root"
              sequence="2"/>

    <!--  Dashboard Configuration Submenu  -->
    <menuitem name="Dashboard"
              id="ks_dashboard_ninja.dashboard_menu"
              parent="central_dashboard_dashboard_configuration_submenu"
              sequence="1"/>

    <menuitem name="Dashboard Layout"
              id="ks_dashboard_ninja.dashboard_layout_menu"
              parent="central_dashboard_dashboard_configuration_submenu"
              sequence="2"/>

    <menuitem name="Import Dashboard"
              id="ks_dashboard_ninja.ks_import_dashboard_menu"
              parent="central_dashboard_dashboard_configuration_submenu"
              sequence="3"/>

    <!--  KPI Submenu  -->
    <menuitem name="KPI Scorecard"
              id="central_dashboard_kpi_scorecard"
              parent="central_dashboard_kpi_root"
              sequence="1"
              action="kpi_scorecard.kpi_scorecard_line_action"/>

    <menuitem name="Periods"
              id="central_dashboard_kpi_period"
              parent="central_dashboard_kpi_root"
              sequence="2"
              action="kpi_scorecard.kpi_period_action"/>

    <menuitem name="KPIs"
              id="central_dashboard_kpi_kpi"
              parent="central_dashboard_kpi_root"
              sequence="3"
              action="kpi_scorecard.kpi_item_action"/>

    <menuitem name="Measurements"
              id="central_dashboard_measurements_root"
              sequence="4"
              parent="central_dashboard_kpi_root"/>

    <menuitem name="KPI Categories"
              id="central_dashboard_kpi_category"
              parent="central_dashboard_kpi_root"
              sequence="4"
              action="kpi_scorecard.kpi_category_action"/>

    <menuitem name="Settings"
              id="central_dashboard_kpi_settings"
              parent="central_dashboard_kpi_root"
              sequence="5"
              action="kpi_scorecard.res_config_settings_kpi_scorecard_action"/>

    <!--  Measurements Grouping  -->
    <menuitem name="Measurements (Variables)"
              id="central_dashboard_measurements_kpi"
              parent="central_dashboard_measurements_root"
              sequence="1"
              action="kpi_scorecard.kpi_measure_item_action"/>

    <menuitem name="Constants"
              id="central_dashboard_kpi_constants"
              parent="central_dashboard_measurements_root"
              sequence="2"
              action="kpi_scorecard.kpi_constant_action"/>

    <menuitem name="Basic Measurements"
              id="central_dashboard_kpi_basic_measures"
              parent="central_dashboard_measurements_root"
              sequence="3"
              action="kpi_scorecard.kpi_measure_action"/>

    <!--  Hide Report Creator Menu  -->
    <record id="make_invisible" model="res.groups">
        <field name="name">Invisible</field>
    </record>
    <record model="ir.ui.menu" id="equip3_general_features.menu_record_creator_root">
        <field name="groups_id" eval="[(6,0,[ref('make_invisible')])]"/>
    </record>
</odoo>