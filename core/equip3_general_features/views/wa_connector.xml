<odoo>
    <data>
    
    
        <record id="whasapp_connector_form" model="ir.ui.view">
            <field name="name">whatsapp.connector.form</field>
            <field name="model">whatsapp.connector</field>
            <field name="arch" type="xml">
                <form string="Whatsapp Connector" create="0" delete="0" edit="1">

                    <sheet>
                        
                            <group>
                                <group string="Whatsapp Connector">
                                    <field name="name"  invisible="1"/>
                                    <field name="url" string="URL" required="1" />
                                    <field name="app_id" string="App ID" required="1" />
                                    <field name="channel_id" required="1" string="Channel ID" />
                                    <field name="secret_key" required="1" string="Secret Key" />
                                </group>


                                <group string="Chatroom Connector">
                                    <field name="is_use_chatroom"  string="Use Chatroom"/>
                                    <field name="email"  attrs="{'invisible':[('is_use_chatroom','=',False)],'required':[('is_use_chatroom','=',True)]}"/>
                                    <field name="password" widget="password" attrs="{'invisible':[('is_use_chatroom','=',False)],'required':[('is_use_chatroom','=',True)]}" />
                                </group>
                            </group>
                
                        
                    </sheet>


                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
    
            </field>
        </record>
    
     <record id="wa_message_template_tree_view" model="ir.ui.view">
            <field name="name">whasapp_connector.tree</field>
            <field name="model">whatsapp.connector</field>
            <field name="arch" type="xml">
                <tree string="Whatsapp Connector" create="0" delete="0" edit="0">
                    <field name="name"/>
                </tree>
            </field>
        </record>




        <record id="whasapp_connector_filter" model="ir.ui.view">
            <field name="name">whasapp_connector.search</field>
            <field name="model">whatsapp.connector</field>
            <field name="arch" type="xml">
                <search string="Search Connector">
                    <field name="name" />
               </search>
            </field>
        </record>
    
     <record id="wa_connector_action" model="ir.actions.act_window">
            <field name="name">Whatsapp Connector</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">whatsapp.connector</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                  Create a new Whatsapp Connector
                </p>
            </field>
        </record>
    
    
    
      <menuitem id="wa_message_connector_menu_id"
            name="Whatsapp Connector"
            action="wa_connector_action"
            parent="wa_integration_menu_settings"
            sequence="99"
            />



        
        
        
    
    </data>
    
    
    </odoo>