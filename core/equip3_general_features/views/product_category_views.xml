<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_form_product_category" model="ir.ui.view">
        <field name="name">product.category.form.inherit</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="stock.product_category_form_view_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='removal_strategy_id']" position="after">
                <group string="Product Code (SKU)">
                    <field name="is_generate_product_code" />
                    <field name="separator" invisible="1"/>
                    <field name="category_prefix_preference" widget="radio" attrs="{'invisible' : [('is_generate_product_code', '!=', True)], 'required': [('is_generate_product_code', '=', True)]}"/>
                    <field name="category_prefix" attrs="{'invisible' : [('is_generate_product_code', '!=', True)], 'required': [('is_generate_product_code', '=', True)]}" />
                    <field name="digits" attrs="{'invisible' : [('is_generate_product_code', '!=', True)], 'required': [('is_generate_product_code', '=', True)]}"/>
                    <field name="current_sequence" force_save="1" attrs="{'invisible' : [('is_generate_product_code', '!=', True)], 'readonly': [('id', '!=', False)], 'required': [('is_generate_product_code', '=', True)]}"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
