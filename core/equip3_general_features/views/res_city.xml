<odoo>

<data>


    <record id="res_city_form_view" model="ir.ui.view">
        <field name="name">City</field>
        <field name="model">res.country.city</field>
        <field name="arch" type="xml">
            <form string="City">
                
                <sheet>
                   
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="city_code"  />
                                <field name="state_id" required="1" />
                            </group>
                        </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="res_city_form_o2m_view" model="ir.ui.view">
        <field name="name">City</field>
        <field name="model">res.country.city</field>
        <field name="arch" type="xml">
            <form string="City">
                
                <sheet>
                   
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="city_code" />
                            </group>
                        </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
        


            <record id="res_city_tree_view" model="ir.ui.view">
                <field name="name">res.country.city.tree</field>
                <field name="model">res.country.city</field>
                <field name="arch" type="xml">
                    <tree >
                        <field name="name"/>
                        <field name="city_code"/>
                        <field name="state_id"/>
                    </tree>
                </field>
            </record>




            <record id="res_city_search" model="ir.ui.view">
                <field name="name">res.country.city.search</field>
                <field name="model">res.country.city</field>
                <field name="arch" type="xml">
                    <search string="Search City">
                       <group name="group_by" string="Group By">
                           <filter name="state_id" string="State" domain="[]" context="{'group_by' : 'state_id'}" />
                    
                       </group>
                   </search>
                </field>
            </record>
       


    <record model="ir.actions.act_window" id="action_res_country_city">
        <field name="name">City</field>
        <field name="res_model">res.country.city</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_state_id':1}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Add a new City
          </p>
        </field>
    </record>


</data>

</odoo>