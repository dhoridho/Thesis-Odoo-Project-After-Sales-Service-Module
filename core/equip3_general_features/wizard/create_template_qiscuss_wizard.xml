<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="create_template_qiscuss_line_view_form" model="ir.ui.view">
            <field name="name">create.template.qiscuss.line.view.form</field>
            <field name="model">create.template.qiscuss.line</field>
            <field name="arch" type="xml">
                <form >
                    <sheet>
                        <group>
                                <group >
                                    <field name="language_id" required="1"/>
                                </group>
                                    <group>
                                        <field name="content" readonly="1" force_save="1"/>
                                    </group>
                            
                        </group>
                    </sheet>
                    <notebook>
                        <page name="header" string="Header">
                            <group >
                                <group >
                                    <field name="use_header" string="Use Header" />
                                    <field name="header_type" string="Header Type" attrs="{'invisible':[('use_header','=',False)],'required':[('use_header','=',True)]}" />
                                    <field name="header_text" placeholder="Use {{1}} to add variable. Max. 1 variable" string="Header Text" attrs="{'invisible':['|',('header_type','!=','text'),('use_header','=',False)],'required':[('header_type','=','text'),('use_header','=',True)]}" />
                                    <field name="file_type" widget="radio"  string="Media Type" attrs="{'invisible':['|',('header_type','!=','media'),('use_header','=',False)],'required':[('header_type','=','media'),('use_header','=',True)]}" />
                                    <!-- <field name="link_file"  string="Link" attrs="{'invisible':['|',('header_type','!=','media'),('use_header','=',False)],'required':[('header_type','=','media'),('use_header','=',True)]}" /> -->
                                    <field name="image_file" string="Attachment" attrs="{'invisible':['|','|',('file_type','!=','image'),('header_type','!=','media'),('use_header','=',False)],'required':[('file_type','=','image'),('use_header','=',True)]}" filename="file_name"/>
                                    <field name="document_file" string="Attachment"  attrs="{'invisible':['|','|',('file_type','!=','document'),('header_type','!=','media'),('use_header','=',False)],'required':[('file_type','=','document'),('use_header','=',True)]}" filename="file_name"/>
                                    <field name="video_file" string="Attachment"  attrs="{'invisible':['|','|',('file_type','!=','video'),('header_type','!=','media'),('use_header','=',False)],'required':[('file_type','=','video'),('use_header','=',True)]}" filename="file_name"/>
                                    <field name="file_name" string="Attachment" invisible="1"/>
                                    <div class="text-muted" style="font-style: italic; font-size: 30px;" attrs="{'invisible':['|','|',('file_type','!=','image'),('header_type','!=','media'),('use_header','=',False)],'required':[('file_type','=','image'),('use_header','=',True)]}">
                                       JPG or PNG File Max 5 MB
                                    </div>
                                    <div class="text-muted" style="font-style: italic; font-size: 15px;" attrs="{'invisible':['|','|',('file_type','!=','document'),('header_type','!=','media'),('use_header','=',False)],'required':[('file_type','=','document'),('use_header','=',True)]}">
                                        PDF File Max 100 MB
                                    </div>
                                    <div class="text-muted" style="font-style: italic; font-size: 15px;" attrs="{'invisible':['|','|',('file_type','!=','video'),('header_type','!=','media'),('use_header','=',False)],'required':[('file_type','=','video'),('use_header','=',True)]}">
                                        MP4 File Max 16 MB
                                    </div>
                                </group>
                                
                            </group>
                            
                        </page>
                        <page name="body" string="Body">
                            <group >
                                <group >
                            
                                        
                                        <field name="body" string="Body" style="height:200px; width:100%;" placeholder="Use {{1}}, {{2}}, {{3}}, etc. to add variable" required="1"/>
                          
                                    
                                </group>
                                
                            </group>
                            
                        </page>
                        <page name="footer" string="Footer">
                            <group >
                                <group >
                                    <field name="is_use_footer" string="Use Footer" />
                                    <field name="footer" attrs="{'invisible':[('is_use_footer','=',False)],'required':[('is_use_footer','=',True)]}" placeholder="Max. 60 Characters"/>
                          
                                </group>
                                
                            </group>
                            
                        </page>

                        <page name="button" string="Button">
                            <group >
                                <group >
                                    <field name="use_button" string="Use Button" />
                                    <field name="button_type" attrs="{'invisible':[('use_button','=',False)],'required':[('use_button','=',True)]}" />
                                    <field name="button_1"  attrs="{'invisible':[('use_button','=',False)]}" />
                                    <field name="button_1_text" attrs="{'invisible':[('button_1','=',False)],'required':[('button_1','=',True)]}"/>
                                    <field name="button_1_url" attrs="{'invisible':['|',('button_1','=',False),('button_type','!=','url')],'required':[('button_1','=',True),('button_type','=','url')]}" string="Button 1 URL"/>
                                    <field name="button_1_phone_number" attrs="{'invisible':['|',('button_1','=',False),('button_type','!=','phone_number')],'required':[('button_1','=',True),('button_type','=','phone_number')]}" string="Button 1 Phone Number"/>
                                    <field name="button_2" attrs="{'invisible':[('use_button','=',False)]}"/>
                                    <field name="button_2_text" attrs="{'invisible':[('button_2','=',False)],'required':[('button_2','=',True)]}"/>
                                    <field name="button_2_url" attrs="{'invisible':['|',('button_2','=',False),('button_type','!=','url')],'required':[('button_2','=',True),('button_type','=','url')]}" string="Button 2 URL"/>
                                    <field name="button_2_phone_number" attrs="{'invisible':['|',('button_2','=',False),('button_type','!=','phone_number')],'required':[('button_2','=',True),('button_type','=','phone_number')]}" string="Button 2 Phone Number"/>
                                    <field name="button_3" attrs="{'invisible':[('use_button','=',False)]}" />
                                    <field name="button_3_text" attrs="{'invisible':[('button_3','=',False)],'required':[('button_3','=',True)]}"/>
                                    <field name="button_3_url" attrs="{'invisible':['|',('button_3','=',False),('button_type','!=','url')],'required':[('button_3','=',True),('button_type','=','url')]}" string="Button 3 URL"/>
                                    <field name="button_3_phone_number" attrs="{'invisible':['|',('button_3','=',False),('button_type','!=','phone_number')],'required':[('button_3','=',True),('button_type','=','phone_number')]}" string="Button 3 Phone Number"/>
                                </group>
                                
                            </group>
                            
                        </page>
                    </notebook>
                </form>
            </field>
        </record>


        <record id="create_template_qiscuss_view_form" model="ir.ui.view">
            <field name="name">create.template.qiscuss.view.form</field>
            <field name="model">create.template.qiscuss</field>
            <field name="arch" type="xml">
                <form string="Create Content">
                    <sheet>
                        <group>
                            <group >
                                <group >
                                    
                                    <field name="name" string="Broadcast Template Name" required="1"/>
                                    <field name="category" required="1"/>
                                </group>
                                
                            </group>
                            
                        </group>
                        <notebook>
                            <page name="conten" string="Content">
                                <field name="content_ids">
                                    <tree>
                                        <field name="language_id" />
                                        <field name="content" />

                                    </tree>
                                
                                
                                </field>
                                
                            </page>
                        </notebook>
                    </sheet>
                       <footer>
                    <button name="submit" type="object" string="Submit" class="oe_highlight"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
                </form>
            </field>
        </record>
    
        
    
    </data>
    

</odoo>
