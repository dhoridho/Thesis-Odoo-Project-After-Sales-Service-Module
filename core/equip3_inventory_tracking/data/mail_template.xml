<odoo>
    <data>

        <record id="email_template_expired_stock_production_lot" model="mail.template">
            <field name="name">Expired Product Stock Production Lot</field>
            <field name="email_from">${ctx.get('email_from')}</field>
            <field name="email_to">${ctx.get('email_to')}</field>
            <field name="subject">Expired Products Today</field>
            <field name="model_id" ref="equip3_inventory_tracking.model_stock_production_lot"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[
                        <p>Dear ${ctx.get('responsible_users')}, these are the following products that have reached it’s expiration date and has expired today.</p>
                        <table cellspacing="0" cellpadding="0" style="width:100%;border-collapse:collapse;background:inherit;color:inherit;border:1px solid black;">
                            <thead style="border:1px solid black;">
                                <th class="text-center" style="border:1px solid black;">No</th>
                                <th class="text-center" style="border:1px solid black;">Location</th>
                                <th class="text-center" style="border:1px solid black;">Lot/Serial Number</th>
                                <th class="text-center" style="border:1px solid black;">Product</th>
                                <th class="text-center" style="border:1px solid black;">Expiry Date</th>
                                <th class="text-center" style="border:1px solid black;">Quantity</th>
                                <th></th>
                            </thead>
                            <tbody style="border:1px solid black;">
                                % for quant in ctx.get('quant'):
                                    % set lot_url = quant.lot_id.get_lot_url()
                                    <tr style="border:1px solid black;">
                                        <td style="border:1px solid black;text-align:center;padding:10px 0 10px 0;">${loop.index}</td>
                                        <td style="border:1px solid black;text-align:center;padding:10px 0 10px 0;">${quant.location_id.display_name}</td>
                                        <td style="border:1px solid black;text-align:center;padding:10px 0 10px 0;">${quant.lot_id.name}</td>
                                        <td style="border:1px solid black;text-align:center;padding:10px 0 10px 0;">${quant.product_id.name}</td>
                                        <td style="border:1px solid black;text-align:center;padding:10px 0 10px 0;">${quant.lot_id.expiration_date}</td>
                                        <td style="border:1px solid black;text-align:center;padding:10px 0 10px 0;">${quant.quantity}</td>
                                        <td style="border:1px solid black;text-align:center;padding:10px 0 10px 0;">
                                            <a href=${lot_url} style="background-color:#875A7B; padding: 10px; text-decoration: none; color: #fff; border-radius: 5px;">
                                                    View ${quant.lot_id.name}
                                            </a>
                                        </td>
                                    </tr>
                                % endfor
                            </tbody>
                        </table>
                        <p>Thank you.</p>
                        ]]>
            </field>
        </record>

