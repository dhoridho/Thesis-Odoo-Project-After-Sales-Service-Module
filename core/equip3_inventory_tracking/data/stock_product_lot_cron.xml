<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.cron" id="stock_product_lot_expire_date">
            <field name="name">Product Expired</field>
            <field name="model_id" ref="model_stock_production_lot"/>
            <field name="code">model._expire_date_cron()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="nextcall" eval="(DateTime.now() + relativedelta(day=1)).strftime('%Y-%m-%d 07:00:00')" />
        </record>

