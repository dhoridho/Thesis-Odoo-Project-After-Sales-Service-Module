<?xml version="1.0" encoding='UTF-8'?>
<odoo>
    <data noupdate="1">
        <record id="autoscrap_scheduler" model="ir.cron">
            <field name="name">Auto scrap expired lots/serial number</field>
            <field name="model_id" ref="model_stock_quant"/>
            <field name="state">code</field>
            <field name="code">model.create_scrap()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
<!--            <field name="active" eval="True"/>-->
           <!-- <field name="nextcall" >2021-9-18 06:00:00</field> -->
           <!-- <field name="nextcall" eval="datetime.now(pytz.timezone('UTC')).strftime('%Y-%m-%d 00:30:00')" /> -->
        </record>

        <record id="auto_delete_confirmed_scrap" model="ir.cron">
            <field name="name">Auto delete confirmed scrap</field>
            <field name="model_id" ref="model_stock_scrap_request"/>
            <field name="state">code</field>
            <field name="code">model._delete_scrap_confirmed()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
<!--            <field name="active" eval="True"/>-->
           <!-- <field name="nextcall" >2021-9-18 06:00:00</field> -->
<!--            <field name="nextcall" eval="datetime.now(pytz.timezone('UTC')).strftime('%Y-%m-%d 00:30:00')" />-->
        </record>

        <record id="product_expiry" model="ir.cron">
            <field name="name">Product Expiry Scheduler</field>
            <field name="model_id" ref="model_product_product"/>
            <field name="state">code</field>
            <field name="code">model.expiry_product_alert()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
        </record>

    </data>
</odoo>