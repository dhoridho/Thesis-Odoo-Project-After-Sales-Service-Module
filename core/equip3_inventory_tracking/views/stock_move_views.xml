<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_move_view_form" model="ir.ui.view">
        <field name="name">stock.move.form.view.inherit</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="equip3_inventory_operation.inherited_view_stock_move_operations"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='barcode']" position="after">
                <group string="Expiration Time" name="expiration_time" attrs="{'invisible': [('use_expiration_date', '=', False)]}">
                    <field name="exp_date" string="Date" attrs="{'readonly' : [('state', '=', 'done')], 'invisible': [('use_expiration_date', '=', False)]}"/>
                </group>
           </xpath>
        </field>
    </record>

    <record id="view_stock_move_nosuggest_operations" model="ir.ui.view">
        <field name="name">view.stock.move.nosuggest.operations</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="equip3_inventory_operation.inherit_view_stock_move_nosuggest_operations_new"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_line_nosuggest_ids']" position="attributes">
                <attribute name="context">{'tree_view_ref': 'stock.view_stock_move_line_operation_tree','default_picking_id': picking_id, 'default_move_id': id, 'default_product_id': product_id, 'default_location_id': location_id, 'default_location_dest_id': location_dest_id, 'default_company_id': company_id, 'move_line_nosuggest_ids': move_line_nosuggest_ids, 'default_exp_date': exp_date}</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_stock_move_line_operation_tree" model="ir.ui.view">
        <field name="name">view.stock.move.line.operation.tree</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='expiration_date']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='qty_done']" position="before">
                <field name="exp_date" attrs="{'column_invisible' : [('parent.use_expiration_date','=', False)]}"/>
            </xpath>
        </field>
    </record>

</odoo>
