<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_product_product_inv_view_form" model="ir.ui.view">
        <field name="name">product.product.inv.form.view.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
           <xpath expr="//group[@name='packaging']" position="before">
                <group name="product_lots" attrs="{'invisible':[('tracking','in',('none'))]}" string="Product Lots">
                     <field name="product_lots_ids" nolabel="1"/>
                </group>
           </xpath>
        </field>
    </record>

