<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_setting_config_inherit_view_form" model="ir.ui.view">
        <field name="name">res.config.setting.view.form.inherite</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='module_stock_picking_batch']/../.." position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="expired_lot_serial_no"/>
                        <div class="text-muted">
                            Configure your expired product tobe scrapped or move to expired location
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="expired_lot_serial_no" class="o_light_label" widget="radio"/>
                            </div>
                            <div class="mt16">
                                <label string="Expense Account" for="scrap_expense_id"/>
                                <field name="scrap_expense_id" context="{'search_default_expensesacc': 1}" domain="[('user_type_id.name', '=', 'Expenses')]"/>
                            </div>
                            <div class="mt16">
                                <label string="Income Account" for="scrap_income_id"/>
                                <field name="scrap_income_id" context="{'search_default_incomeacc': 1}" domain="[('user_type_id.name', '=', 'Income')]"/>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('expired_lot_serial_no', '=', 'scrap_expire')]}">
                    <div class="o_setting_left_pane">
                        <field name="is_auto_validate"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="is_auto_validate"/> -->
                <!--<div class="text-muted">
                            Creates a Transfer Operation to Expired Location.
                        </div>-->
                <!-- </div>
                </div>                 -->
            </xpath>
        </field>
    </record>
</odoo>