<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <template id="report_package_barcode_packaging">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <t>
                        <div class="page">
                            <div class="oe_structure"/>
                            
                            <!-- barcode nummber -->
                            <!-- <div align="center" t-attf-style="color:black;font-size:15px;font-weight:bold;" >
                                <t t-foreach="o.quant_ids" t-as="quant">
                                    <span t-field="quant.product_id.barcode" />
                                </t>
                            </div> -->

                            <div class="row o_packaging_type" t-if="o.packaging_id">
                                <div class="col-12 text-center" style="font-size:24px; font-weight:bold;"><span t-field="o.barcode_packaging"/></div>
                            </div>
                
                            <div class="row">
                                <div class="col-12 text-center">
                                    <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.barcode_packaging, 600, 100)" style="width:600px;height:100px" alt="Barcode"/>
                                    <!-- <p t-field="o.barcode_packaging"  style="font-size:20px;"></p> -->
                                </div>
                            </div>

                            <div class="row o_packaging_type" t-if="o.packaging_id">
                                <div class="col-12 text-center" style="font-size:24px; font-weight:bold;"><span t-field="o.barcode_packaging"/></div>
                            </div>

                             <!-- barcode nummber -->
                            <!-- <div align="center" t-attf-style="color:black;font-size:15px;" >
                                <t t-foreach="o.quant_ids" t-as="quant">
                                    <span t-field="quant.product_id.barcode" />
                                </t>
                            </div> -->

                            <div class="row o_packaging_type" t-if="o.packaging_id">
                                <div class="col-12 text-center" style="font-size:24px; font-weight:bold;"><span>Package Type: </span><span t-field="o.packaging_id.name"/></div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <template id="label_barcode_packaging">
            <t t-foreach="docs" t-as="package">
                <t t-translation="off">
^XA
^FO100,50
^A0N,44,33^FD<t t-esc="package.barcode_packaging"/>^FS
^FO100,100^BY3
^BCN,100,Y,N,N
^FD<t t-esc="package.barcode_packaging"/>^FS
^XZ
                </t>
            </t>
        </template>

    </data>

</odoo>
