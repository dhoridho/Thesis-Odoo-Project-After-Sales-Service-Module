<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="wizard_scrap_order_report_form_view" model="ir.ui.view">
            <field name="name">wizard.scrap.order.report.form.view</field>
            <field name="model">wizard.scrap.order.report</field>
            <field name="arch" type="xml">
                <form>
                    <field name="state" invisible="1"/>
                    <field name="name" invisible="1"/>
                    <group states="choose">
                        <field name="company_id" required="1" groups="base.group_multi_company"
                               options="{'no_open': True, 'no_create': True, 'no_create_edit': True}" />
                    </group>
                    <group col="4" states="choose">
                        <field name="start_date" required="1"/>
                        <field name="end_date" required="1"/>
                    </group>
                    <div states="get">
                            <h2>Report Download</h2>
                            <p>File : <field name="data" readonly="1" filename="name"/></p>
                    </div>
                    <footer states ="choose">
                        <button name="print_report" string="PDF" type="object" class="oe_highlight" />
                        or
                        <button name="print_xls_report" string="XLS" type="object" class="oe_highlight" />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                    <footer states="get">
                        <button name="go_back" string="Go Back" type="object" class="oe_highlight" />
                        or
                        <button special="cancel" string="Close" type="object" class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_wizard_scrap_order_report">
            <field name="name">Scrap Order Report</field>
            <field name="res_model">wizard.scrap.order.report</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wizard_scrap_order_report_form_view" />
            <field name="target">new</field>
        </record>

        <menuitem action="action_wizard_scrap_order_report" id="menu_action_wizard_scrap_order_report"
                  parent="stock.menu_warehouse_report" sequence="1"/>

    </data>
</odoo>
