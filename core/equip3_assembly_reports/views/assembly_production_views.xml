<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_finished_product_pivot" model="ir.ui.view">
        <field name="name">view.finished.product.pivot</field>
        <field name="model">assembly.production.record</field>
        <field name="arch" type="xml">
            <pivot string="Finished Product" js_class="assembly_pivot"/>
        </field>
    </record>

	<record id="action_view_finished_product_assembly" model="ir.actions.act_window">
		<field name="name">Assembly Finished Product</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">assembly.production.record</field>
		<field name="view_mode">pivot</field>
		<field name="view_id" ref="view_finished_product_pivot"/>
		<field name="context">{'default_record_type': 'assembly'}</field>
		<field name="domain">[('record_type', '=', 'assembly'), ('state', '=', 'confirm')]</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_empty_folder">
				No data to display
			</p>
			<p>
				Try to add some records, or make sure that there is no active filter in the search bar.
			</p>
		</field>
	</record>

	<record id="action_view_material_consumed_disassembly2" model="ir.actions.act_window">
		<field name="name">Disassembly Material Consumed</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">assembly.production.record</field>
		<field name="view_mode">pivot</field>
		<field name="view_id" ref="view_finished_product_pivot"/>
		<field name="context">{'default_record_type': 'disassembly'}</field>
		<field name="domain">[('record_type', '=', 'disassembly'), ('state', '=', 'confirm')]</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_empty_folder">
				No data to display
			</p>
			<p>
				Try to add some records, or make sure that there is no active filter in the search bar.
			</p>
		</field>
	</record>

</odoo>