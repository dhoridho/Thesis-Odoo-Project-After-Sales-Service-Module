<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="survey_fill_form_in_progress_student" inherit_id="survey.survey_fill_form_in_progress">
        <xpath expr="//div[hasclass('o_survey_form_content_data')]" position="after">
            <input type="checkbox" class="d-none survey_form_submit"/>
            <div class="m-4">
                <div id="submit_modal_survey" class="modal fade" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="mt-2 text-center">
                                <img src="/equip3_school_portal/static/src/img/pngwing.com.png" class="img-thumbnail" style="border-radius: 63px; height: 97px; width: 100px;"/>
                            </div>
                            <div class="modal-body text-center">
                                <h2><strong>Answer Confirmation!</strong></h2>
                                <h3 class="text-secondary"><small>Are you sure to submit this answer?</small></h3>
                            </div>
                            <div class="modal-footer text-center">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <div class='col-lg-12'>
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                    <button type="button" id="modal_survey_submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

</odoo>
