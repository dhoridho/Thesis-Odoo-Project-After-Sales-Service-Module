<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="thank_you_admission_register" name="Thank You">
        <t t-call="website.layout">
            <div id="wrap">	
                <div class="oe_structure">
                    <div class='container' >
                        <div style="margin-left: 560px;" class="mt-lg-5">
                            <img src="/equip3_school_portal/static/src/img/clipart150472.png" class="img-thumbnail" style="border-radius: 63px; height: 97px; width: 100px;"/>
                        </div>
                        <div style="margin-left: 415px;">
                            <h1><strong>Admission Successful</strong></h1>
                        </div> 
                        <form action="/student/thankyou" method="post" enctype="multipart/form-data" class="checkout_autoformat">
                            <div class='row' style='padding-top: 24px;margin-left: 148px;'>                                 
                                <div class="form-group col-lg-11" style="text-align: center; margin-bottom: 50px;">
                                    <h3><span>Thank you for your registration. The registration data has been successfully saved. We will process the admission, will contact you soon.</span></h3><br/>
                                    <h3><span>For more information, please contact us through our phone or email listed below.</span></h3>
                                </div>
                            </div>
                        </form> 
                    </div>
                </div>
            </div>
            
        </t>            
	</template>

</odoo>
