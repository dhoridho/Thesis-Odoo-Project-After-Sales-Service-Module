<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="student_schedule_template" name="Student Schedule Layout">
        <t t-call="website.layout">
			<div id="wrap">
				<div class="container mb64">
					<div class="col-md-12">
					<h3 class="page-header">Student Schedule</h3>
					<t t-if="schedule_ids">
						<table class="o_school_portal">
							<thead style="text-align: center;" class="o_school_portal">
								<tr class="active">
								<th class="o_school_portal" style="background-color:transparent;width: 14%;">Name</th>
								<th class="o_school_portal" style="background-color:transparent;width: 14%;">Academic Class</th>
								<th class="o_school_portal" style="background-color:transparent;width: 14%;">Year</th>
								</tr>
							</thead>
						<tbody style="text-align: center;" class="o_school_portal">
							<t t-foreach="schedule_ids" t-as="schedule">
								<tr class="o_school_portal" t-att-data-id="schedule.id" t-att-data-action="'/student/schedule/%d' % (schedule.id)">
									<td class="o_school_portal">
										<span t-field="schedule.name"/>
									</td>
									<td class="o_school_portal">
										<span t-field="schedule.standard_id.name"/>
									</td>
									<td class="o_school_portal">
										<span t-esc="schedule.year_id.name"/>
									</td>
								</tr>
							</t>
						</tbody>
						</table>
					</t>
			</div></div></div>
		</t>
    </template>

</odoo>
