<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="portal_invoice_page" name="portal invoice page" inherit_id="account.portal_invoice_page">

        <xpath expr="//t[@t-set='entries']/ul/li[1]" position="inside">
            <li class="list-group-item flex-grow-1">
                <div class="o_download_pdf btn-toolbar flex-sm-nowrap">
                    <div>
                        <a class="btn btn-secondary btn-block o_download_btn" t-attf-href="/web/content/ir.attachment/#{payment_instruction}/datas?access_token=#{payment_instruction_token}&amp;download=true" target="_blank" style="width: 127%;" title="Download">Payment Instructions</a>
                        <button type="button" id="payment_validation" style="width: 127%;" t-attf-class="btn btn-secondary btn-block o_print_btn" t-att-disabled="'disabled' if invoice.payment_details else None">Payment Validation</button>
                    </div>
                </div>
            </li>
            <div id="payment_validation_id" class="modal fade">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content text-center">
                        <div class='col-lg-6'>
                            <div class="form-group">
                            <label for="payment_mode" style="margin-top: 14%;"><b>Payment Mode</b></label>
                            <select class="form-control" name="payment_mode" id="payment_mode" required="required" style="margin-left: 80%; margin-top: -39px;">
                                <option value="bank">Bank</option>
                                <option value="cash">Cash</option>
                            </select>
                            </div>
                        </div>
                        <div class='col-lg-6'>
                            <div class="form-group">
                            <label for="amount" class="mr-5"><b>Amount</b></label>
                            <input type="number" class="form-control" id="amount" name="amount" required="required" placeholder="Amount" style="margin-left: 80%;
                            margin-top: -39px;"/>
                            </div>
                        </div>
                        <div class='col-lg-6'>
                            <div class="form-group">
                            <label for="date_of_receipt" class="ml-1"><b>Date of Receipt</b></label>
                            <input type="date" class="form-control" id="date_of_receipt" name="date_of_receipt" required="required" placeholder="Date" style="margin-left: 80%;
                            margin-top: -39px;"/>
                            </div>
                        </div>
                        <div class='col-lg-6'>
                            <div class="form-group">
                            <label for="receipt_number" class="ml-2"><b>Receipt Number</b></label>
                            <input type="number" class="form-control" id="receipt_number" name="receipt_number" required="required" placeholder="Receipt Number" style="margin-left: 80%;
                            margin-top: -39px;"/>
                            </div>
                        </div>
                        <div class='col-lg-6'>
                            <div class="form-group">
                            <label for="proof_of_payment"><b>Proof Of Payment</b></label>
                            <input type="file" class="form-control" id="proof_of_payment" name="proof_of_payment" required="required" placeholder="Proof Of Payment" style="margin-left: 80%;
                            margin-top: -39px;"/>
                            <input type="hidden" name="proof_of_payment_filename" id="proof_of_payment_filename"/>
                            </div>
                        </div>
                        <div class='col-lg-6'>
                            <div class="form-group">
                            <label for="remark" class="mr-5"><b>Remark</b></label>
                            <input type="text" class="form-control" id="remark" name="remark" required="required" placeholder="Remark" style="margin-left: 80%;
                            margin-top: -39px;"/>
                            </div>
                            <input class="form-control" id="invoice_id" type="hidden" name="invoice_id" t-att-value="invoice.id" t-att-data-order_id="invoice.id"/>
                        </div>
                        <div class="modal-footer text-center">
                            <div class='col-lg-12'>
                                <button type="button" id="final_modal_validate" class="btn btn-primary">Validate</button>
                                <d type="button" class="btn btn-secondary" data-dismiss="modal">Discard</d>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

</odoo>