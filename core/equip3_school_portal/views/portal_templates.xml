    <template id="welcome_portal_template" name="Welcome Portal Layout">
        <div id="wrap" style="background-color: #ffffff;">
            <div class="oe_structure">
                <section class="mt-4 mb-4">
                    <div class="container-fluid d-flex">
                        <div class="school_portal_sidebar other_form">
                            <t t-call="equip3_school_portal.sidebar_portal_template"/>
                        </div>
                        <div class="ml-3" style="width: 100%; min-height: 625px;">
                            <div class="d-flex align-items-center justify-content-between" style="height: 100%;">
                                <div style="width: 50%; padding-left:15%">
                                    <h1 style="margin-top: 100px"> 
                                        Hello <span t-field="request.env.user.partner_id.name" style="color:#ff6b00;"/><br/> 
                                        Welcome to <strong>School Portal!</strong>
                                    </h1>
                                    <h6 style="color:#ff6b00;">One smart platform to simplify all administration Processes</h6>
                                </div>
                                <div class="text-center" style="width: 50%;">
                                    <img src="equip3_school_portal/static/src/img/schoolrev-01-1.png" style="height: 300px; width: 400px;"/>
                                </div>
                            </div>
                        </div>
                    </div>
    
                    <div t-if="pager" class="o_portal_pager text-center" style="margin-top: 1%; margin-left: 18%; margin-bottom: 1%;">
                        <t t-call="portal.pager"/>
                    </div>
                </section>
            </div>
        </div>
