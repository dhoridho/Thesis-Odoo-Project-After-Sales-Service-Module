<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="portal_table" inherit_id="portal.portal_table">
        <xpath expr="//div/table" position="attributes">
            <attribute name="class">table table-hover table-striped</attribute>
            <attribute name="style">background-color: #FFFFFF;</attribute>
        </xpath>
        <xpath expr="//div" position="attributes">
            <attribute name="t-attf-class">border rounded border-top-0 #{classes if classes else ''}</attribute>
        </xpath>
    </template>

    <template id="portal_my_invoices" inherit_id="account.portal_my_invoices">
        <xpath expr="//t//t/thead/tr/th[2]" position="after">
            <th>Customer</th>
        </xpath>
        <xpath expr="//t//t/tbody/t/tr/td[2]" position="after">
            <td><span t-field="invoice.partner_id.name"/></td>
        </xpath>
    </template>

    <template id="portal_my_home_menu_invoice" inherit_id="account.portal_my_home_menu_invoice" priority="30">
        <xpath expr="//a[@t-if='invoice']/.." position="replace">
            <li t-if="page_name == 'invoice'" t-attf-class="breadcrumb-item #{'active ' if not invoice else ''}">
                <a t-if="invoice" t-attf-href="/my/invoices?{{ keep_query() }}">Student Invoices</a>
                <t t-else="">Student Invoices</t>
            </li>
        </xpath>
    </template>


</odoo>
