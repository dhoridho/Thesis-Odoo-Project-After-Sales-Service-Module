<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_student_certificate_inherit" model="ir.ui.view">
        <field name="name">student.student.form.inherit</field>
        <field name="model">student.student</field>
        <field name="inherit_id" ref="school.view_student_student_form_1"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='certificate_ids']/form/group/field[@name='certi']" position="after">
                <field name="file_name" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='certificate_ids']/form/group/field[@name='certi']" position="attributes">
                <attribute name="filename">file_name</attribute>
            </xpath>
            <xpath expr="//field[@name='certificate_ids']/tree/field[@name='certi']" position="after">
                <field name="file_name" string="Certificate"/>
            </xpath>
            <xpath expr="//field[@name='certificate_ids']/tree/field[@name='certi']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='certificate_ids']/tree" position="attributes">
                <attribute name="editable"></attribute>
            </xpath>
        </field>
    </record>

    <record id="school.menu_ems" model="ir.ui.menu">
        <field name="web_icon">equip3_school_portal,static/description/icon.png</field>
    </record>

</odoo>
