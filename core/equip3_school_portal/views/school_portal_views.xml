<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="assets_frontend" name="sale_order assets" inherit_id="web.assets_frontend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" href="/equip3_school_portal/static/src/scss/school_portal.scss"/>
            <link rel="stylesheet" href="/equip3_school_portal/static/src/scss/style.scss"/>
            <script type="text/javascript" src="/equip3_school_portal/static/src/js/custom.js"></script>
            <script type="text/javascript" src="/equip3_school_portal/static/src/js/transcript.js"></script>
            <script type="text/javascript" src="/equip3_school_portal/static/src/js/country_state.js"></script>
            <script type="text/javascript" src="/equip3_school_portal/static/src/js/survey_form.js"></script>
            <link rel="stylesheet" type="text/css" href="/equip3_hashmicro_ui/static/src/css/hm_font.css"/>
            <link rel="stylesheet" type="text/scss" href="/equip3_hashmicro_ui/static/src/scss/icons.scss"/>
            <link rel="stylesheet" href="/web/static/lib/fullcalendar/core/main.css"/>
            <link rel="stylesheet" href="/web/static/lib/fullcalendar/daygrid/main.css"/>
            <link rel="stylesheet" href="/web/static/lib/fullcalendar/timegrid/main.css"/>
            <link rel="stylesheet" href="/web/static/lib/fullcalendar/list/main.css"/>
            <script type="text/javascript" src="/web/static/lib/fullcalendar/core/main.js"></script>
            <script type="text/javascript" src="/web/static/lib/fullcalendar/moment/main.js"></script>
            <script type="text/javascript" src="/web/static/lib/fullcalendar/interaction/main.js"></script>
            <script type="text/javascript" src="/web/static/lib/fullcalendar/daygrid/main.js"></script>
            <script type="text/javascript" src="/web/static/lib/fullcalendar/timegrid/main.js"></script>
            <script type="text/javascript" src="/web/static/lib/fullcalendar/list/main.js"></script>
        </xpath>
    </template>

    <template id="student_portal_template" name="Student Portal Layout">
        <t t-call="website.layout">
            <t t-call="equip3_school_portal.student_portal_menus"/>
            <div style="text-align: center;margin-top: 146px;min-height:650px;">
                <h1>Welcome to <strong>School Portal!</strong></h1>
            </div> 
        </t>
    </template>

    <template id="user_navbar_hide_app" inherit_id="website.user_navbar" name="Hide Applications for Student and Parent">
        <xpath expr="//ul[@id='oe_applications']" position="attributes">
            <attribute name="t-if">not request.env.user.has_group('school.group_school_student') and not request.env.user.has_group('school.group_school_parent')</attribute>
        </xpath>
    </template>
</odoo>
