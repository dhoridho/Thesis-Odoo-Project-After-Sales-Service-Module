<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="course_registration_form" name="course registration Layout">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container mb64">
                    <div class="col-md-12">
                        <h3 class="page-header my-3">Subject Registration</h3>
                    </div>
                    <form action="/course/registration" method="post">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                        <div class='row mt-5' style='margin-left: 35px;'>
                            <div class='col-3'>
                                <div class="form-group">
                                  <label for="pid"><b>Student ID</b></label>
                                </div>
                            </div>
                            <div class='col-lg-6'>
                                <div class="form-group">
                                    <input type="text" class="form-control" id="pid" name="pid" disabled="disabled"/>
                                </div>
                            </div>  
                        </div>
                        <div class='row' style='margin-left: 35px;'>
                            <div class='col-3'>
                                <div class="form-group">
                                  <label for="student_id"><b>Student Name</b></label>
                                </div>
                            </div>
                            <div class='col-lg-6'>
                                <div class="form-group">
                                    <select class="form-control" name="student_id" id="student_id" required="required">
                                        <option value=""></option>
                                        <t t-foreach="student_id" t-as="s">
                                            <option t-att-value="s.id" t-att-selected="s.id == (student and student.id or -1)">
                                                <t t-esc="s.name" />
                                            </option>
                                        </t>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class='row' style="margin-left: 35px;">
                            <div class='col-3'>
                                <div class="form-group">
                                  <label for="school_id"><b>School</b></label>
                                </div>
                            </div>
                            <div class='col-lg-6'>
                                <div class="form-group" >
                                    <select class="form-control" name="school_id" required="required">
                                        <option value=""></option>
                                        <t t-foreach="school_id" t-as="s">
                                            <option t-att-value="s.id" t-att-selected="s.id == (school and school.id or -1)">
                                                <t t-esc="s.name" />
                                            </option>
                                        </t>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class='row' style="margin-left: 35px;">
                            <div class='col-3'>
                                <div class="form-group">
                                  <label for="program_id"><b>Program</b></label>
                                </div>
                            </div>
                            <div class='col-lg-6'>
                                <div class="form-group" >
                                    <select class="form-control" name="program_id" required="required">
                                        <option value=""></option>
                                        <t t-foreach="program_id" t-as="p">
                                            <option t-att-value="p.id" t-att-selected="p.id == (program and program.id or -1)">
                                                <t t-esc="p.name" />
                                            </option>
                                        </t>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div style="width: 1100px;height: auto;" class="m-md-4">
                            <ul class="nav nav-tabs mb-3" id="ex1" role="tablist" style="margin-left: -11px;">
                                <li class="nav-item" role="Course Registration Lines">
                                    <a class="nav-link" data-toggle="tab" href="#course_registration_lines" >Subject Registration Lines</a>
                                </li>
                            </ul>
                             <div class="tab-content" id="ex1-content">
                                <div id="course_registration_lines" class="tab-pane fade show active">
                                    <div class="form-group col-12 show_total_project" >
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <table class="table table-bordered mt-3 course_registration">
                                                <thead>
                                                    <tr>
                                                        <td>Subject Name</td>
                                                        <td>Subject Code</td>
                                                        <td width="5%"></td>
                                                    </tr>
                                                </thead>
                                                <div class="collapse">
                                                    <tbody>
                                                        <tr class="add_new_line d-none">
                                                            <td>
                                                                <select class="form-control" name="course_id" id="course_id">
                                                                    <option value=""></option>
                                                                    <t t-foreach="course_id" t-as="s">
                                                                        <option t-att-value="s.id" t-att-selected="s.id == (course and course.id or -1)">
                                                                            <t t-esc="s.name" />
                                                                        </option>
                                                                    </t>
                                                                </select>
                                                            </td>
                                                        <td><input type="text" class="form-control" name="course_code" id="course_code" disabled="disabled"/></td>                                                            
                                                        <td><button class="btn fa fa-trash-o remove_line" style="color: red; padding: 0px; margin-left: -6px; margin-top: 6px;" name="delete" aria-label="Delete row 1"></button></td>
                                                        </tr>
                                                    </tbody>
                                                </div>
                                            </table>
                                        </div>
                                        <textarea class="d-none" name="cost_data">
                                        </textarea>
                                        <button type="button" class="btn btn-fill-primary add_new_row button-color" style="margin-right: -15px;" >Add new Row</button>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                        <div class='row' style='margin-top: 22px;margin-right: 24px;'>                            
                            <div class='row mt-4 ml-lg-5'>
                                <div style="margin: auto;">
                                    <button type="submit" class="btn btn-fill-primary d-none form_submit">Submit</button>
                                    <button type="button" class="btn btn-fill-primary application_submit">Submit</button>
                                    <button type="reset" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div> 
        </t>
    </template>

</odoo>
