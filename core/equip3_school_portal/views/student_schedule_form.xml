<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="student_schedule_form_template" name="Student Admission Register">
        <t t-call="website.layout">
            <div id="wrap">	
                <div class="oe_structure">
                    <section>
                        <div class='container' >
                            <div class='heading m-3'>
                                <h5><b>Student Schedule</b></h5>
                            </div>
                            <div class='row' style='padding-top: 24px;'>
                                <div class='col-lg-6'>
                                    <div class='row' style="margin-left: 16px;">
                                        <div class="form-group ">
                                            <label for="student_name"><b>Description</b></label>
                                        </div>
                                        <div class="form-group ml-lg-5">
                                            <span t-esc="schedule.name"/>
                                        </div> 
                                    </div>
                                </div>
                                <div class='col-lg-6'>
                                    <div class='row' style="margin-left: 175px;">
                                        <div class="form-group ">
                                            <label for="student_name"><b>Academic Class </b></label>
                                        </div>
                                        <div class="form-group ml-lg-5">
                                            <span t-esc="schedule.standard_id.name"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class='row'>
                                <div class='col-lg-6'>
                                    <div class='row' style="margin-left: 16px;">
                                        <div class="form-group ">
                                            <label for="student_name"><b>Year </b></label>
                                        </div>
                                        <div class="form-group" style="margin-left: 98px;">
                                            <span t-esc="schedule.year_id.name"/>
                                        </div> 
                                    </div>
                                </div>
                                <div class='col-lg-6'>
                                    <div class='row' style="margin-left: 175px;">
                                        <div class="form-group ">
                                            <label for="student_name"><b>Time Table Type </b></label>
                                        </div>
                                        <div class="form-group ml-lg-5">
                                            <div>
                                                <span t-esc="schedule.timetable_type.capitalize()"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div style="width: 1100px;height: auto;" class="m-md-4">
                                <ul class="nav nav-tabs mb-3" id="ex1" role="tablist" style="margin-left: -11px;">
                                    <li class="nav-item" role="Time Table">
                                        <a class="nav-link" data-toggle="tab" href="#time_table" >Time Table</a>
                                    </li>
                                </ul>
                                 <div class="tab-content" id="ex1-content">
                                    <div id="time_table" class="tab-pane fade show active">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                <th scope="col">Week day</th>
                                                <th scope="col">Subject Name</th>
                                                <th scope="col">Start Time</th>
                                                <th scope="col">End Time</th>
                                                <th scope="col">Faculty Name</th>
                                                <th scope="col">Classroom</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <t t-foreach="schedule.timetable_ids" t-as="timetable">
                                                    <tr>
                                                        <td><span t-esc="timetable.week_day"/></td>
                                                        <td><span t-esc="timetable.subject_id.name"/></td>
                                                        <td><span t-esc="timetable.start_time"/></td>
                                                        <td><span t-esc="timetable.end_time"/></td>
                                                        <td><span t-esc="timetable.teacher_id.name"/></td>
                                                        <td><span t-esc="timetable.class_room_id.name"/></td>
                                                    </tr>
                                                </t>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </t>
    </template>
</odoo>
