<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="teacher_portal_profile_template" name="Teacher Portal">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container mb64 py-64">
                    <div class="col-md-12">
                        <h3 class="page-header mb-4">Teacher Profiles</h3>
                        <t t-if="teacher_ids">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col">Teacher Email</th>
                                        <th scope="col">Teacher Name</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="teacher_ids" t-as="teacher_id">
                                        <tr class="o_school_portal student_row" t-att-data-id="teacher_id.id" t-att-data-action="'/teacher/profile/%d' % (teacher_id.id)">
                                            <td>
                                                <span t-field="teacher_id.work_email"/>
                                            </td>
                                            <td>
                                                <span t-field="teacher_id.name"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>

</odoo>