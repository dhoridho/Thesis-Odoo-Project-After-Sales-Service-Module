<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- maintenance.equipment inherit form view -->
        <record id="maintenance_equipment_asset_view_form" model="ir.ui.view">
            <field name="name">maintenance.equipment.asset.view.form</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='fac_area']" position="after">
                    <field name="department_id" required="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>