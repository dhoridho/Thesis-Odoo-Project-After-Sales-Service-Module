<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<data>

		<template id="warranty_information" name="Waranty Information" customize_show="True">
			<t t-call="website.layout">
				<form action="/page/warranty_information" method="post" class="form-horizontal mt32" enctype="multipart/form-data">
					<div class="text-center col-lg-12">
						<h2>Warranty Information</h2>
					</div>
					<br/>
					<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
					<div class='col-lg-12'>
						<div class="container col-lg-4" align="center" style="border: 0px solid #000000;margin-bottom: 30px;">
							<div align="center">
								<img t-att-src="'data:image/png;base64,%s' % to_text(product_warranty.product_id.image_1920)" widget="image" style="max-height: 250px;" alt="Product"/>
							</div>
							<div>
								<label class="col-form-label" for="name">Product Warranty</label>
								<span style="margin-left:10px;">:</span>
								<span style="margin-left:10px;" t-esc="product_warranty.product_id.name" />
							</div>
							<div>
								<label class="col-form-label" for="name">Serial</label>
								<span style="margin-left:10px;">:</span>
								<span style="margin-left:10px;" t-esc="product_warranty.product_serial_id.name" />
							</div>
							<div>
								<label class="col-form-label" for="name">Product Category</label>
								<span style="margin-left:10px;">:</span>
								<span style="margin-left:10px;" t-esc="product_warranty.product_id.categ_id.name" />
							</div>
							<div>
								<label class="col-form-label" for="name">Warranty Start Date</label>
								<span style="margin-left:10px;">:</span>
								<span style="margin-left:10px;" t-esc="product_warranty.warranty_create_date" />
							</div>
							<div>
								<label class="col-form-label" for="name">Warranty End Date</label>
								<span style="margin-left:10px;">:</span>
								<span style="margin-left:10px;" t-esc="product_warranty.warranty_end_date" />
							</div>
							<div>
								<label class="col-form-label" for="name">Status</label>
								<span style="margin-left:10px;">:</span>
								<span style="margin-left:10px;" t-if="product_warranty.state == 'new'">New</span>
								<span style="margin-left:10px;" t-if="product_warranty.state == 'in_progress'">Under Warranty</span>
								<span style="margin-left:10px;" t-if="product_warranty.state == 'to_be_invoice'">To Be Invoice</span>
								<span style="margin-left:10px;" t-if="product_warranty.state == 'invoiced'">Invoiced</span>
								<span style="margin-left:10px;" t-if="product_warranty.state == 'to_renew'">To Renew</span>
								<span style="margin-left:10px;" t-if="product_warranty.state == 'expired'">Expired</span>
							</div>
							
						</div>
					</div>
				</form>
			</t>
		</template>

	</data>
</odoo>
