<odoo>
      <data noupdate="0">

        <record id="hashmicro_employee_disciplinary_notification" model="ir.cron">
            <field name="name">Employee Disciplinary Expiry Check</field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="nextcall" eval="(DateTime.now()).strftime('%Y-%m-%d 21:00:00')"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="model_hr_employee_disciplinary"/>
            <field name="state">code</field>
            <field name="doall" eval="True"/>
            <field name="code">model.ir_cron_update_status()</field>
        </record>
      </data>


</odoo>