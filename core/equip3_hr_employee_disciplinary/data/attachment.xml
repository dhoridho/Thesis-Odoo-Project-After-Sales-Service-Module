<odoo>
	<template id="disciplinary_attachment">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
            	<t t-foreach="docs" t-as="doc">
	                <div class="page">
	                    <div class="row">
	                        <div class="col-xs-12">
	                        	<div t-raw="doc.discliplinary_stage.letter_content"/>
	                        </div>
	                    </div>
	                </div>
	            </t>
            </t>
        </t>
	</template>

	<record id="equip3_hr_employee_disciplinary_attachment_report" model="ir.actions.report">
   <field name="name">Disciplinary Allocation</field>
   <field name="model">hr.employee.disciplinary</field>
   <field name="report_type">qweb-pdf</field>
   <field name="report_name">equip3_hr_employee_disciplinary.disciplinary_attachment</field>
   <field name="report_file">equip3_hr_employee_disciplinary.disciplinary_attachment</field>
   <field name="attachment_use">1</field>
   <field name="print_report_name">'Disciplinary Allocation - %s' % (object.employee_id.name)</field>
</record>

