<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_employee_disciplinary_form_view" model="ir.ui.view">
            <field name="name">hr.employee.disciplinary.form</field>
            <field name="model">hr.employee.disciplinary</field>
            <field name="arch" type="xml">
                <form string="Employee Disciplinary">
                    <header>
                        <field name="status" widget="statusbar"/>
                         <button string="Confirm" name="set_confirm" type="object"  class="btn-primary" attrs="{'invisible':[('is_hide_confirm','=',True)]}" 
                         groups="hr.group_hr_manager"
                         />
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="is_hide_confirm" invisible="1"/>
                                <field name="disciplinary_number" readonly="1"/>
                                <field name="employee_id" required="1" domain="[('id','in',employee_domain_ids)]"/>
                                <field name="employee_domain_ids" invisible="1"/>
                                <field name="discliplinary_stage" required="1"/>
                                <field name="dicliplined_date" required="1"/>
                                <field name="valid_for_months" />
                                <field name="valid_until" readonly="1"/>
                                <field name="reason_of_disciplinary" required="1"/>
                            </group>
                            <group>
                                <field name="job_position"/>
                                <field name="department_id"/>
                                <field name="company_id"/>
                                <!-- <field name="branch_id"/> -->
                                <field name="create_uid"/>
                                <field name="create_date"/>
                            </group>

                            
                        </group>
                        <notebook>
                            <page name="history_disciplinary" string="History Of Disciplinary">
                                <field name="history_ids" >
                                    <tree create="0" delete="0">
                                        <field name="dicliplined_date" />
                                        <field name="discliplinary_stage" />
                                        <field name="valid_until" />
                                        <field name="reason_of_disciplinary" />
                                        <field name="status" />

                                    </tree>
                                    </field>
                                
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_employee_disciplinary_tree_view" model="ir.ui.view">
            <field name="name">hr.employee.disciplinary.tree</field>
            <field name="model">hr.employee.disciplinary</field>
            <field name="arch" type="xml">
                <tree string="Employee Disciplinary">
                    <field name="disciplinary_number"/>
                    <field name="employee_id"/>
                    <field name="job_position"/>
                    <field name="department_id"/>
                    <field name="discliplinary_stage"/>
                    <field name="dicliplined_date"/>
                    <field name="valid_until"/>
                    <field name="status" decoration-primary="status == 'draft'"
                            decoration-success="status == 'confirmed'"
                            decoration-danger="status == 'expired'" 
                            widget='badge'/>
                </tree>
            </field>
        </record>

        <record id="hr_employee_disciplinary_search_view" model="ir.ui.view">
            <field name="name">hr.employee.disciplinary.search</field>
            <field name="model">hr.employee.disciplinary</field>
            <field name="arch" type="xml">
                <search>

                    <field name="disciplinary_number"/>
                    <field name="employee_id"/>
                    <field name="job_position"/>
                    <field name="department_id"/>
                    <field name="discliplinary_stage"/>
                    <filter string="Disciplinary Stages" context="{'group_by':'discliplinary_stage'}" name="discliplinary_stage_groupby"/>
                </search>
            </field>
        </record>

