        <record id="hr_employee_disciplinary_act_window" model="ir.actions.server">
            <field name="name">Employee Disciplinary</field>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="model_id" ref="model_hr_employee_disciplinary"/>
            <field name="code">action = model.custom_menu()</field>
        </record>

        <menuitem name="Employee Disciplinary" id="hr_employee_disciplinary_menu" parent="hr.menu_hr_root" action="hr_employee_disciplinary_act_window"/>

    </data>
</odoo>