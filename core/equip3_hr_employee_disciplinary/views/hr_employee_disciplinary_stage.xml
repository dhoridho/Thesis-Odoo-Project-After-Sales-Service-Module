<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_employee_disciplinary_stage_form_view" model="ir.ui.view">
            <field name="name">hr.employee.disciplinary.stage.form</field>
            <field name="model">hr.employee.disciplinary.stage</field>
            <field name="arch" type="xml">
                <form string="Employee Disciplinary">

                    <sheet>
                        <group>
                            <group>
                                <field name="disciplinary_name"/>
                                <field name="disciplinary_stage"/>
                                <field name="valid_for_months"/>
                                <field name="send_an_email"/>
                            </group>
                            <group>
                                <field name="company_id"/>
                                <!-- <field name="branch_id"/> -->
                                <field name="create_uid"/>
                                <field name="create_date"/>
                            </group>
                        </group>
                        <h5>Used Variables: </h5><br></br>
                        <h6>Company Name : @(company_name)</h6><br></br>
                        <h6>Company Address : @(company_address)</h6><br></br>
                        <h6>Employee : @(employee_name)</h6><br></br>
                        <h6>Department : @(department)</h6><br></br>
                        <h6>Company Address : @(company_address)</h6><br></br>
                        <h6>Job Position : @(job_position)</h6><br></br>
                        <h6>Disciplinary Date : @(discipnary_date)</h6><br></br>
                        <h6>Disciplinary Number : @(disciplinary_number)</h6><br></br>
                        <field name="letter_content"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_employee_disciplinary_stage_tree_view" model="ir.ui.view">
            <field name="name">hr.employee.disciplinary.stage.tree</field>
            <field name="model">hr.employee.disciplinary.stage</field>
            <field name="arch" type="xml">
                <tree string="Employee Disciplinary">
                    <field name="disciplinary_name"/>
                    <field name="disciplinary_stage"/>
                    <field name="valid_for_months"/>
                    <field name="send_an_email"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record id="hr_employee_disciplinary_stage_search_view" model="ir.ui.view">
            <field name="name">hr.employee.disciplinary.stage.search</field>
            <field name="model">hr.employee.disciplinary.stage</field>
            <field name="arch" type="xml">
                <search>

                    <field name="disciplinary_name"/>
                    <field name="disciplinary_stage"/>
                    <field name="valid_for_months"/>
                    <field name="send_an_email"/>
                    <field name="company_id"/>
                </search>
            </field>
        </record>

        <record id="hr_employee_disciplinary_stage_act_window" model="ir.actions.act_window">
            <field name="name">Disciplinary Stage</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee.disciplinary.stage</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new  Disciplinary Stage.
                </p>
            </field>
        </record>

        <menuitem name="Disciplinary Stages" id="hr_employee_disciplinary_stage_menu" parent="hr.menu_human_resources_configuration"
                  action="hr_employee_disciplinary_stage_act_window" sequence="99"/>

    </data>
</odoo>