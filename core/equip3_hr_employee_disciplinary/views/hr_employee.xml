<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_employee_disciplinary_form_inherit" model="ir.ui.view">
            <field name="name">hr.employee.disciplinary.inherit.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='personal_information']" position="after">
                   <page name="disciplinary_history" string="Disciplinary">
                       <group string="History of Disciplinary">
                            <field name="disciplinary_stage_ids" widget="many2many" nolabel="1">
                           <tree>
                               <field name="dicliplined_date"/>
                               <field name="discliplinary_stage"/>
                               <field name="valid_until"/>
                               <field name="reason_of_disciplinary"/>
                               <field name="attachment" filename="document_fname" widget="binary"/>
                               <field name="document_fname" invisible="1"/>
                               <field name="status" />

                           </tree>


                       </field>

                       </group>


                   </page>
                </xpath>

            </field>
        </record>
    </data>
</odoo>