<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_config_settings_form_view" model="ir.ui.view">
            <field name="name">hr.config.settings.form</field>
            <field name="model">hr.config.settings</field>
            <field name="arch" type="xml">
                <form string="HR Settings" delete="false" create="false">
                    <sheet>
                        <group string="Mobile App Settings">
                            <group>
                                <field name="name" invisible="1"/>
                                <field name="application_session_timeout"/>
                                <field name="face_distance_limit"/>
                            </group>
                        </group>
                        <group string="Attendance Settings">
                            <group>
                                <field name="web_kiosk_pin" string="Web Kiosk Pin"/>
                            </group>
                        </group>
                        <group string="Payroll Settings">
                            <group>
                                <field name="use_attendance_formula"/>
                                <field name="split_bank_transfer_approval_matrix"/>
                                <field name="sbt_approval_method" string="Approval Method" attrs="{'invisible':[('split_bank_transfer_approval_matrix','=',False)],'required':[('split_bank_transfer_approval_matrix','=',True)]}"/>
                                <field name="sbt_approval_levels" string="Approval Levels" attrs="{'invisible':['|',('split_bank_transfer_approval_matrix','=',False),('sbt_approval_method','!=','hierarchy')]}"/>
                            </group>
                        </group>

                        <group string="Recruitment Setting">
                            <group>
                                <field name="applicant_blacklist"/>
                            <p style="font-weight:bold" attrs="{'invisible':[('applicant_blacklist','=',False)]}">Blacklist Applicant based on:</p>
                            <field name="bl_email" string="Email" attrs="{'invisible':[('applicant_blacklist','=',False)]}"/>
                            <field name="bl_id_card_number" string="ID Card Number" attrs="{'invisible':[('applicant_blacklist','=',False)]}"/>
                            <field name="bl_phone_number" string="Phone Number" attrs="{'invisible':[('applicant_blacklist','=',False)]}"/>



                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_config_settings_tree_view" model="ir.ui.view">
            <field name="name">hr.config.settings.tree</field>
            <field name="model">hr.config.settings</field>
            <field name="arch" type="xml">
                <tree delete="false" create="false">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="hr_config_settings_act_windows" model="ir.actions.act_window">
            <field name="name">HR Settings</field>
            <field name="res_model">hr.config.settings</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no Data
                </p>
            </field>
        </record>

        <menuitem id="human_resources_settings_root_menu" name="Human Resources Settings" groups="base.group_no_one"/>

        <menuitem name="Settings" id="hr_config_settings_menu"
                  parent="human_resources_settings_root_menu"
                  action="hr_config_settings_act_windows"/>

    </data>
</odoo>