<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_inherit_form" model="ir.ui.view">
        <field name="name">purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <button name="button_confirm" position="after">
                <button type="object" name="action_quotation_send_wp" class="oe_highlight" string="Send By Whatsapp" groups="sh_all_in_one_purchase_tools.group_purchase_whatsapp_feature" />
                <button name="send_by_whatsapp_direct_to_po" type="object" class="oe_highlight" string="Send By Whatsapp Direct" groups="sh_all_in_one_purchase_tools.group_purchase_whatsapp_feature" />
            </button>

            <field name="notes" position="after">
                <field name="text_message" invisible="1" />
            </field>
        </field>
    </record>
    <record id="sh_purchase_order_send_whatsapp_message_inherit_custom" model="ir.ui.view">
        <field name="name">sh.base.send.whatsapp.message.wizard.form</field>
        <field name="model">sh.base.send.whatsapp.message.wizard</field>
        <field name="inherit_id" ref="sh_all_in_one_purchase_tools.sh_base_whatsapp_integration_send_whatsapp_message_form" />
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group" position="after">
                <field name="purchase_order_id" invisible="1" />
            </xpath>
        </field>
    </record>
</odoo>
