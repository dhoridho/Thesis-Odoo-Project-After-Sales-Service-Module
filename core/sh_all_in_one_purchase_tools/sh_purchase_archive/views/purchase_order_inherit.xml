<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add active field and archive banner -->
    <record id="sh_purchase_order_form_view_inherit" model="ir.ui.view">
        <field name="name">sh.purchase.order.for.view.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <field name="partner_id" position="before">
                <field name="active" invisible="1" />
            </field>
            <xpath expr='//div[hasclass("oe_button_box")]' position="after">
                <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}" />
            </xpath>
        </field>
    </record>
</odoo>
