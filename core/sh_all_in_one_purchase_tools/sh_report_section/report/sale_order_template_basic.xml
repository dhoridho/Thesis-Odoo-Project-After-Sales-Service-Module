<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sh_sale_order_template_basic_doc">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <!-- For border -->
                    <t t-set="b_styler" t-value="' '" />
                    <t t-if="o.border_main">
                        <t t-set="b_styler" t-value="str(o.border_size) + 'px ' + o.border_style + ' ' + o.border_color " />
                    </t>
                    <!-- End Border -->
                    <div class="page" t-att-style='"border:%s;"%(b_styler)'>
                        <div class="container">
                            <div class="row">
                                <div class="col-12">
                                    <p style="font-size: 26px; font-weight: bold; text-align: center; margin: 0px; padding: 20px;" t-field="o.name" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12" style="padding-left: 0px; padding-right: 0px;">
                                    <t t-if="o.section_line">
                                        <t t-foreach="o.section_line" t-as="sline">
                                            <t t-set="int_style" t-value="' '" />
                                            <t t-if="sline.check_ids">
                                                <t t-foreach="sline.check_ids" t-as="st">
                                                    <t t-if="st.name == 'Bold'">
                                                        <t t-set="int_style" t-value="int_style + 'font-weight:bold;' " />
                                                    </t>
                                                    <t t-if="st.name == 'Italic'">
                                                        <t t-set="int_style" t-value="int_style + 'font-style:italic;' " />
                                                    </t>
                                                    <t t-if="st.name == 'Underline'">
                                                        <t t-set="int_style" t-value="int_style + 'text-decoration: underline;' " />
                                                    </t>
                                                </t>
                                            </t>

                                            <t t-set="b_style" t-value="' '" />
                                            <t t-if="sline.borders">
                                                <t t-set="b_style" t-value="str(sline.border_size) + 'px ' + sline.border_style + ' ' + sline.border_color " />
                                            </t>
                                            <div
                                                t-att-style='"border-top:%s;"%(b_style)+"border-bottom:%s;"%(b_style) + "padding:3px;background-color:%s;"%(sline.color) + "font-size:%spx;" %(sline.text_size) + int_style'
                                                t-field="sline.name"
                                            />
                                            <div t-if="sline.type == 'text'" t-field="sline.content_text" style="padding: 20px;" />
                                            <div class="col-12" t-if="sline.type == 'html'" t-field="sline.content_html" style="padding-left: 40px; padding-top: 20px;" />
                                        </t>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <!-- Action -->
    <record id="sh_sale_order_tmpl_report_basic_action" model="ir.actions.report">
        <field name="name">Report Template Basic</field>
        <field name="model">sh.report.template</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sh_all_in_one_purchase_tools.sh_sale_order_template_basic_doc</field>
        <field name="report_file">sh_all_in_one_purchase_tools.sh_sale_order_template_basic_doc</field>
        <field name="print_report_name">'Report Template'</field>
        <field name="binding_model_id" ref="model_sh_report_template" />
        <field name="binding_type">report</field>
    </record>
</odoo>
