<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.rule" id="report_directory_comp_rule">
        <field name="name">Multi-company</field>
        <field name="model_id" ref="model_sh_report_template" />
        <field name="global" eval="True" />
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>
    <record id="sh_group_enable_report_section" model="res.groups">
        <field name="name">Enable Report Template</field>
        <field name="category_id" ref="base.module_category_hidden" />
    </record>
</odoo>
