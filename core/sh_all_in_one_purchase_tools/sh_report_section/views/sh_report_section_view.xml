<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- form view -->
    <record id="sh_report_template_form" model="ir.ui.view">
        <field name="name">sh.report.template</field>
        <field name="model">sh.report.template</field>
        <field name="arch" type="xml">
            <form string="Report Template">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="company_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="border_main" />
                            <field name="border_size" class="col-4" style="padding-left: 0px;" attrs="{'invisible': [('border_main','=',False)]}" placeholder="Size" />
                            <field name="border_style" class="col-4" style="padding-left: 0px;" attrs="{'invisible': [('border_main','=',False)]}" placeholder="Style" />
                            <field name="border_color" class="col-4" style="width: 120px; padding-left: 0px;" widget="color" attrs="{'invisible': [('border_main','=',False)]}" placeholder="Color" />
                            <field name="new_page" />
                        </group>
                        <field name="section_line">
                            <tree>
                                <field name="type_id" invisible="1" />
                                <field name="name" />
                                <field name="type" />
                            </tree>
                            <form>
                                <sheet>
                                    <group>
                                        <group>
                                            <field name="type_id" invisible="1" />
                                            <field name="name" />
                                            <field name="type" widget="radio" />
                                        </group>
                                        <group>
                                            <group>
                                                <field name="check_ids" widget="many2many_checkboxes" />
                                                <field name="text_size" />
                                                <field name="color" widget="color" />

                                                <field name="borders" />
                                                <field name="border_size" attrs="{'invisible': [('borders','=',False)]}" placeholder="Size" />
                                                <field name="border_style" attrs="{'invisible': [('borders','=',False)]}" placeholder="Style" />
                                                <field name="border_color" widget="color" attrs="{'invisible': [('borders','=',False)]}" placeholder="Color" />
                                            </group>
                                        </group>
                                    </group>
                                    <group>
                                        <field name="content_text" attrs="{'invisible': [('type', '!=', 'text' )]}" />
                                        <field name="content_html" attrs="{'invisible': [('type', '!=', 'html' )]}" />
                                    </group>
                                </sheet>
                            </form>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- report template tree view -->
    <record id="sh_report_template_tree" model="ir.ui.view">
        <field name="name">sh.report.template</field>
        <field name="model">sh.report.template</field>
        <field name="arch" type="xml">
            <form string="Report Template">
                <sheet>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                            </group>
                        </group>
                    </sheet>
                </sheet>
            </form>
        </field>
    </record>

    <!-- MenuAction -->
    <record id="sh_report_template_menu_action" model="ir.actions.act_window">
        <field name="name">Report Template</field>
        <field name="res_model">sh.report.template</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Report menuitem root -->
    <menuitem id="sh_report_template_menuitem_root" sequence="1" action="sh_report_template_menu_action" name="Report Template" web_icon="sh_all_in_one_purchase_tools,static/src/img/icon1.png" groups="sh_all_in_one_purchase_tools.sh_group_enable_report_section" />
</odoo>
