<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_order_report" model="ir.ui.view">
        <field name="name">purchase.order.report.wizard</field>
        <field name="model">purchase.order.report</field>
        <field name="arch" type="xml">
            <form string="Purchase Order Xls Report">
                <group>
                    <group>
                        <p><b>Do you want to print Purchase Order Report?</b></p>
                    </group>
                </group>
                <footer>
                    <button string="Download Xls" name="action_purchase_report" type="object" class="btn-primary" />
                    or
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="action_view_purchase_order_xls_report" model="ir.actions.act_window">
        <field name="name">Purchase Order Excel Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.order.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="purchase.model_purchase_order" />
    </record>
</odoo>
