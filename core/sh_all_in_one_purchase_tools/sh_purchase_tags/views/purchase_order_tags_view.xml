<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Purchase Tags Tree -->
    <record id="sh_purchase_tags_tree" model="ir.ui.view">
        <field name="name">sh.purchase.tags.tree</field>
        <field name="model">sh.purchase.tags</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name" />
                <field name="color" widget="color_picker" />
            </tree>
        </field>
    </record>

    <!-- Purchase Tags Action -->
    <record id="sh_purchase_tags_action" model="ir.actions.act_window">
        <field name="name">Purchase Tag</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.purchase.tags</field>
        <field name="view_mode">tree</field>
    </record>

    <!-- Purchase Tags Menu -->
    <menuitem id="sh_purchase_tags_menu" groups="sh_all_in_one_purchase_tools.sh_purchase_tags_user_id" action="sh_purchase_tags_action" name="Purchase tag" parent="purchase.menu_purchase_config" />
</odoo>
