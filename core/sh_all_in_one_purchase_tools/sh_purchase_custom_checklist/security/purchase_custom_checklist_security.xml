<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record model="ir.rule" id="comp_rule">
        <field name="name">Purchase Checklist multi-company</field>
        <field name="model_id" ref="model_purchase_custom_checklist" />
        <field name="global" eval="True" />
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>
    
    <record id="group_enable_purchase_checklist" model="res.groups">
        <field name="name">Enable Purchase Custom Checklist</field>
        <field name="category_id" ref="base.module_category_hidden" />
    </record>
</odoo>
