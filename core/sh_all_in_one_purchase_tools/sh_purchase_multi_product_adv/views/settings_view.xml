<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ADVANCE PURCHASE MULTI PRODUCT SELECTION SETTINGS FORM VIEW -->
    <record id="sh_pmps_adv_settings_form_view" model="ir.ui.view">
        <field name="name">sh.pmps.adv.settings.form.view</field>
        <field name="model">pmps.adv.settings</field>
        <field name="arch" type="xml">
            <form string="Search Products Settings" create="false">
                <group>
                    <field name="name" invisible="1" />
                    <field name="sh_pmps_pro_field_ids" widget="many2many_tags" options="{'no_create': True}" />
                    <field name="sh_pmps_pro_attr_ids" widget="many2many_tags" options="{'no_create': True}" />
                </group>
            </form>
        </field>
    </record>

    <!-- ADVANCE PURCHASE MULTI PRODUCT SELECTION SETTING ACTION -->
    <record id="sh_pmps_adv_settings_action" model="ir.actions.act_window">
        <field name="name">Search Products Settings</field>
        <field name="res_model">pmps.adv.settings</field>
        <field name="view_mode">form</field>
    </record>

    <!-- ADVANCE PURCHASE MULTI PRODUCT SELECTION MENUITEM -->
    <menuitem id="sh_pmps_adv_settings" groups="sh_all_in_one_purchase_tools.group_enable_purchase_multi_product_adv" name="Search Products Settings" action="sh_pmps_adv_settings_action" parent="purchase.menu_purchase_config"/>
</odoo>
