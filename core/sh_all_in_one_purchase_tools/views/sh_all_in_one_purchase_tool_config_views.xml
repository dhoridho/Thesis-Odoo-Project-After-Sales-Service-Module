<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_all_in_one_purchase_tool_config_cancel_form_inherit" model="ir.ui.view">
        <field name="name">purchase.config.cancel.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='purchase']//div[1]" position="after">
                <h2>All in one Purchase Tool Configurations</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="group_enable_merge_purchase_order" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="group_enable_merge_purchase_order" />
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="group_enable_purchase_checklist" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="group_enable_purchase_checklist" />
                        </div>
                        <br />
                        <br />
                    </div>

                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="group_enable_purchase_multi_product_adv" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="group_enable_purchase_multi_product_adv" />
                        </div>
                        <br />
                        <br />
                    </div>

                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="purchase_show_signature" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="purchase_show_signature" />
                        </div>
                        <br />
                        <br />
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible':[('purchase_show_signature','=',False)]}">
                        <div class="o_setting_left_pane">
                            <field name="purchase_enable_other_sign_option" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="purchase_enable_other_sign_option" />
                            <div class="text-muted">
                                Enable Other Sign Option
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible':[('purchase_show_signature','=',False)]}">
                        <div class="o_setting_left_pane">
                            <field name="chk_sign_confirm" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="chk_sign_confirm" />
                            <div class="text-muted">
                                Check sign before Confirmation Purchase Order
                            </div>
                        </div>
                        <br />
                        <br />
                    </div>

                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="group_enable_purchase_order_history" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="group_enable_purchase_order_history" />
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box" groups="sh_all_in_one_purchase_tools.group_enable_purchase_order_history">
                        <div class="o_setting_left_pane" />
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Last Confirmed Order Display Limit</span>
                            <div class="text-muted">
                                <field name="sh_purchase_configuration_limit" />
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="group_enable_purchase_custom_product_template" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="group_enable_purchase_custom_product_template" />
                        </div>
                        <br />
                        <br />
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="group_enable_purchase_price_history" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="group_enable_purchase_price_history" />
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box" attrs="{'invisible':[('group_enable_purchase_order_history','=',True)]}" />
                    <div class="col-xs-12 col-md-6 o_setting_box" groups="sh_all_in_one_purchase_tools.group_enable_purchase_price_history">
                        <div class="o_setting_left_pane"></div>
                        <div class="o_setting_right_pane">
                            <label for="record_based_on_purchase" />
                            <div class="text-muted">
                                Purchase order product price history based on
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="record_based_on_purchase" widget="radio" options="{'horizontal':true}" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box" groups="sh_all_in_one_purchase_tools.group_enable_purchase_price_history">
                        <div class="o_setting_left_pane"></div>
                        <div class="o_setting_right_pane">
                            <label for="item_limit_purchase" />
                            <div class="text-muted">
                                Number of items display in product purchase price history
                                <field name="item_limit_purchase" />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
