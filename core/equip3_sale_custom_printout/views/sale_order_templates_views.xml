<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_template_form" model="ir.ui.view">
        <field name="name">sale.order.templates.form</field>
        <field name="model">sale.order.templates</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="sale_order_header_ids" widget="many2many_tags"/>
                        <field name="orientation"/>
                    </group>
                    <group>
                        <field name="sale_order_table_ids" widget="many2many_tags"/>
                        <field name="sale_order_footer_ids" widget="many2many_tags"/>
                        <field name="paper_size_format"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="view_sale_order_template_tree" model="ir.ui.view">
        <field name="name">sale.order.templates.tree</field>
        <field name="model">sale.order.templates</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_sale_order_template" model="ir.actions.act_window">
      <field name="name">Custom Printout Template</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">sale.order.templates</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Custom Printout Template"
              id="menu_sale_custom_printout_template"
              parent="base.reporting_menuitem"
              action="action_sale_order_template"
              sequence="10"/>
    
    <!-- <function model="sale.order.templates" name="_create_default_template_rfq_and_so"/> -->
</odoo>