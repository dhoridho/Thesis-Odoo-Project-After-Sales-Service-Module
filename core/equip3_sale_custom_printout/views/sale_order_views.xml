<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_order_form_view_inherit_sale_operation" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="equip3_sale_other_operation.sale_order_form_view_inherit_sale_operation"/>
        <field name="arch" type="xml">
            <button name="quotation_send_report" position="after">
                <button string="Custom Print" name="action_custom_print" type="object" class="oe_highlight" attrs="{'invisible': ['|', '&amp;', ('is_customer_approval_matrix', '=', False), ('is_over_limit_validation', '=', False), ('state', 'not in', ('quotation_approved', 'sale'))]}"/>
                <button string="Custom Print" name="action_custom_print" type="object" class="oe_highlight" attrs="{'invisible': ['|', '|', ('is_customer_approval_matrix', '=', True), ('is_over_limit_validation', '=', True), ('state', 'not in', ('draft', 'sale'))]}"/>
            </button>
        </field>
    </record>

</odoo>
