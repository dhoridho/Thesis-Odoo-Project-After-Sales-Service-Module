<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_blanket_order_template_form" model="ir.ui.view">
        <field name="name">blanket.order.templates.form</field>
        <field name="model">blanket.order.templates</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="blanket_order_header_ids" widget="many2many_tags"/>
                        <field name="orientation"/>
                    </group>
                    <group>
                        <field name="blanket_order_table_ids" widget="many2many_tags"/>
                        <field name="blanket_order_footer_ids" widget="many2many_tags"/>
                        <field name="paper_size_format"/>
                    </group>
                </group>
            </form>
        </field>
    </record>
</odoo>