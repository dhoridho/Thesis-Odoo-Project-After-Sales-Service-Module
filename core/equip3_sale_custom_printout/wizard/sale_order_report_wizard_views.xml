<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_report_wizard" model="ir.ui.view">
        <field name="name">sale.order.report.wizard</field>
        <field name="model">sale.order.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Print Report">
                <div class="col-6 o_setting_left_pane">
                    <label for="report_type">Select Report</label>
                    <field name="report_type" widget="radio" nolabel="1" string="Select Report"/>
                </div>
                <footer>
                    <button name="action_print" string="Print" type="object" class="oe_highlight"/>
                    <button string="Cancel" special='cancel' class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
