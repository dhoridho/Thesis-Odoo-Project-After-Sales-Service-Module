<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data noupdate="1">
        <record id="crm_rule_meeting_own_documents" model="ir.rule">
            <field name="name">Meetings Own Documents</field>
            <field ref="model_calendar_event" name="model_id"/>
            <field name="domain_force">[('user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        </record>
        <record id="crm_rule_meeting_all_documents" model="ir.rule">
            <field name="name">Meetings All Documents</field>
            <field ref="model_calendar_event" name="model_id"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman_all_leads'))]"/>
        </record>
    </data>
</odoo>
