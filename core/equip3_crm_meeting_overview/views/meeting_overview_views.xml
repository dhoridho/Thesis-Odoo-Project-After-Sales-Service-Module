<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_opportunity_tree" model="ir.ui.view">
        <field name="name">crm.opportunity.inherited.tree</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_oppor" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="remark"/>
                <field name="quotation"/>
                <field name="final_quotation"/>
            </xpath>
        </field>
    </record>

    <record id="view_meeting_overview_tree" model="ir.ui.view">
        <field name="name">view.meeting.overview</field>
        <field name="model">crm.meeting.overview</field>
        <field name="arch" type="xml">
            <tree string="Meetings" editable="bottom" create="false" export_xlsx="false">
                <field name="opportunity_id" string="Lead Name" readonly="1"/>
                <field name="calendar_id" invisible="1"/>
                <field name="stage_id" readonly="1"/>
                <field name="start" readonly="1"/>
                <field name="meeting_salesperson_ids" widget="many2many_tags" readonly="1"/>
                <field name="remark"/>
                <field name="meeting_count" string="Meeting Qty" readonly="1"/>
                <!--                <field name="activity_type_id" readonly="1"/>-->
                <field name="activity_ids" readonly="1" widget="list_activity"/>
                <field name="state_1" readonly="1"/>
                <field name="cannot_be_quoted"/>
                <field name="potential"/>
                <field name="order_ids" invisible="1"/>
                <field name="quotation" readonly="0"/>
                <field name="final_quotation" domain="[('order_id', 'in', order_ids)]" readonly="0"/>
            </tree>
        </field>
    </record>

    <record id="crm_meeting_overview_action_new" model="ir.actions.act_window">
        <field name="name">Meeting Calendar Overviews</field>
        <field name="res_model">crm.meeting.overview</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_meeting_overview_tree"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create Meeting Calendar Overview Entry.
            </p>
        </field>
    </record>

    <record id="action_view_calendar_events_tree_news" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="crm_meeting_overview_action_new"/>
        <field name="sequence" eval="2"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_meeting_overview_tree"/>
    </record>
</odoo>