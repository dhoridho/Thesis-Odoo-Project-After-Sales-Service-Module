<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_action_actualization_wizard_form" model="ir.ui.view">
        <field name="name">view.action.actualization.wizard.form</field>
        <field name="model">action.actualization.wizard</field>
        <field name="arch" type="xml">
            <form string="Actualization">
                <sheet>
                    <group>
                        <field name="allowed_mining_prod_line_ids" widget="many2many_tags" invisible="1"/>
                        <field name="mining_prod_plan_id" invisible="1"/>
                        <field name="mining_prod_line_id" string="Production Line" context="{'show_actualization_count': 1}"/>
                    </group>
                </sheet>
                <footer>
                    <button name="submit" string="Confirm" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>