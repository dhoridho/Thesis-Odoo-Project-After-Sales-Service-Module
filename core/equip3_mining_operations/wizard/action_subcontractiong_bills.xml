<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- purchase.order form view -->
    <record id="purchase_order_custom_create_bills_view_form" model="ir.ui.view">
        <field name="name">purchase.order.view.form</field>
        <field name="model">purchase.order</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="id" invisible="1"/>
                        <label for="period_start"/>
                        <div class="o_row">
                            <field name="period_start" required="1"/>
                            <span>To</span>
                            <field name="period_end" required="1"/>
                        </div>
                        <field name="operation_two_id" invisible="1"/>
                        <field name="mining_actualization_ids" widget="many2many_tags" force_save="1"/>
                        <field name="custom_total_qty" force_save="1" readonly="1"/>
                    </group>
                </group>
                <footer>
                    <button name="action_custom_create_bills" type="object" string="Confirm" class="btn btn-primary"/>
                    <button type="object" string="Close" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
