<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_action_actualization_confirm" model="ir.ui.view">
        <field name="name">view.action.actualization.confirm</field>
        <field name="model">action.actualization.confirm</field>
        <field name="arch" type="xml">
            <form string="Confirmation">
                <field name="mining_prod_act_id" invisible="1"/>
                <div class="m-2">
                    There is one or more moves that will not be valuated. The movement is not detected as a movement in, out, dropship, or dropship returned.
                    <br/>
                    <b><field name="message"/></b>
                </div>
                <footer>
                    <button name="action_continue" string="Continue" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>