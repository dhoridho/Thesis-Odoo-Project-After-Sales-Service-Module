<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_mining_production_conf_tree" model="ir.ui.view">
        <field name="name">view.mining.production.conf.tree</field>
        <field name="model">mining.production.conf</field>
        <field name="arch" type="xml">
            <tree string="Production Configuration">
                <field name="site_id"/>
                <field name="operation_id"/>
                <field name="operation_type"/>
            </tree>
        </field>
    </record>

    <record id="view_mining_production_conf_form" model="ir.ui.view">
        <field name="name">view.mining.production.conf.form</field>
        <field name="model">mining.production.conf</field>
        <field name="arch" type="xml">
            <form string="Production Configuration">
                <sheet>
                    <group>
                        <group>
                            <field name="site_id"/>
                            <field name="operation_id" domain="[('operation_type_id', '!=', None)]"/>
                            <field name="operation_type" invisible="1"/>
                            <field name="location_id" attrs="{'invisible': [('operation_type', 'not in', ('production', 'extraction'))], 'required': [('operation_type', 'in', ('production', 'extraction'))]}"/>
                            <field name="location_src_id" attrs="{'invisible': [('operation_type', '!=', 'shipment')], 'required': [('operation_type', '=', 'shipment')]}"/>
                            <field name="location_dest_id" attrs="{'invisible': [('operation_type', '!=', 'shipment')], 'required': [('operation_type', '=', 'shipment')]}"/>
                            <field name="product_ids" widget="many2many_tags" attrs="{'invisible': [('operation_type', 'not in', ('shipment', 'extraction'))], 'required': [('operation_type', 'in', ('shipment', 'extraction'))]}"/>
                            <field name="input_ids" widget="many2many_tags" attrs="{'invisible': [('operation_type', '!=', 'production')], 'required': [('operation_type', '=', 'production')]}"/>
                            <field name="output_ids" widget="many2many_tags" attrs="{'invisible': [('operation_type', '!=', 'production')], 'required': [('operation_type', '=', 'production')]}"/>
                            <field name="is_subcontracting"/>
                        </group>
                        <group>
                            <field name="company_id" force_save="1"/>
                            <field name="branch_id" options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_view_mining_production_conf" model="ir.actions.act_window">
        <field name="name">Production Configuration</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mining.production.conf</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Add Production Configuration
            </p>
        </field>
    </record>
</odoo>