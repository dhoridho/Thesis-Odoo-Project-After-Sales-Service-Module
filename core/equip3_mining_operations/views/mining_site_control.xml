<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mining_site_control_form" model="ir.ui.view">
        <field name="name">mining.site.control.form</field>
        <field name="model">mining.site.control</field>
        <field name="arch" type="xml">
            <form string='Mining Site Control'>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approved,progress,done" attrs="{'invisible': [('state', '=', 'rejected')]}"/>
                    <field name="state_reject" widget="statusbar" statusbar_visible="draft,rejected,progress,done" attrs="{'invisible': [('state', '!=', 'rejected')]}"/>
                    <button name="action_approval" string="Request Approval" type="object" class="oe_highlight"
                            attrs="{'invisible':['|',('is_matrix_on','=', False),('state', '!=', 'draft')]}"/>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" attrs="{'invisible': ['|',('state', '!=', 'draft'),('is_matrix_on','!=', False)]}"/>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=','approved')]}"/> <!-- attrs="{'invisible': [('state', 'not in', ['approved','draft']),'&amp;',('is_matrix_on','!=', False)]}" -->
                    <button name="action_approve" string="Approve" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'to_be_approved')]}"/>
                    <button name="action_reject" string="Reject" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'to_be_approved')]}"/>
                    <button name="action_cancel" string="Cancel" type="object" class="oe_highlight" attrs="{'invisible': [('state', 'not in', ['draft','to_be_approved','approved','confirm','rejected','progress']),'&amp;',('is_matrix_on','!=', False)]}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="site_code" required="1"/>
                            <field name="mining_site" required="1"/>
                            <field name="ppic" required="1" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="approval_matrix_id" readonly="1" attrs="{'invisible': [('is_matrix_on', '=', False)], 'required': [('is_matrix_on', '!=', False)]}" force_save="1"/>
                        </group>
                        <group>
                            <field name="analytic_group_ids" widget="many2many_tags" required="1" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="company_id" readonly="1"/>
                            <field name="is_branch_required" invisible="1"/>
                            <field name="branch_id" attrs="{'readonly':[('state','not in',['draft'])],'required':[('is_branch_required', '=', True)]}" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="create_date" readonly="1"/>
                            <field name="create_uid" readonly="1"/>
                            <field name="is_matrix_on" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Operation">
                            <field name="operation_ids">
                                <tree string="Operation">
                                    <field name="name"/>
                                    <field name="primary_product_id" string="Product"/>
                                    <field name="primary_uom_id" string="Unit of Measure"/>
                                    <field name="line_ids" invisible="1">
                                        <tree>
                                            <field name="product_id"/>
                                            <field name="uom_id"/>
                                            <field name="primary"/>
                                            <field name="update_sequence"/>
                                        </tree>
                                    </field>
                                </tree>
                            </field>
                        </page>
                        <page name="approval_matrix_lines" string="Approval Matrix Lines" attrs="{'invisible': [('is_matrix_on', '!=', True)]}">
                            <field name="approval_matrix_line_ids" context="{
                                'tree_view_ref': 'equip3_mining_accessright_settings.view_mining_approval_matrix_entry_tree',
                                'form_view_ref': 'equip3_mining_accessright_settings.view_mining_approval_matrix_entry_form',
                            }"/>
                        </page>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="mining_site_control_tree" model="ir.ui.view">
        <field name="name">mining.site.control.tree</field>
        <field name="model">mining.site.control</field>
        <field name="arch" type="xml">
            <tree>
                <field name="site_code"/>
                <field name="mining_site" string="Mining Site"/>
                <field name="ppic"/>
                <field name="create_date"/>
                <field name="state" widget="badge" decoration-primary2="state == 'confirmed'" decoration-warning="state == 'progress'" decoration-success2="state == 'done'" decoration-danger="state =='rejected'" decoration-muted="state =='draft'" decoration-secondary="state =='cancel'" decoration-primary3="state =='to_be_approved'" decoration-primary="state =='approved'" decoration-success="state =='to_close'"/>
            </tree>
        </field>
    </record>

    <record id="mining_site_control_actions" model="ir.actions.act_window">
        <field name="name">Mining Site Control</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mining.site.control</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your Mining Site Control !
            </p>
        </field>
    </record>
</odoo>