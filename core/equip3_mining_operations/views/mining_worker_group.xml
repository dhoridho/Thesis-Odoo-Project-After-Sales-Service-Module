<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- mining.worker.group form view -->
    <record id="model_name_view_form" model="ir.ui.view">
        <field name="name">mining.worker.group.view.form</field>
        <field name="model">mining.worker.group</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="head_id" required="1" domain="[('active', '=', True)]" options="{'no_create_edit': True, 'no_create': True}"/>
                        </group>
                        <group>
                            <field name="company_id" readonly="1"/>
                            <field name="branch_id" options="{'no_create_edit': True, 'no_create': True}"/>
                            <field name="create_uid" string="Created By" readonly="1"/>
                            <field name="create_date" string="Created On" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Worker" name="worker_ids">
                            <field name="worker_ids" domain="[('active', '=', True)]">
                                <tree string="Worker">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- mining.worker.group tree view -->
    <record id="mining_worker_group_view_tree" model="ir.ui.view">
        <field name="name">mining.worker.group.view.tree</field>
        <field name="model">mining.worker.group</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" required="1"/>
                <field name="head_id" required="1" domain="[('active', '=', True)]"/>
            </tree>
        </field>
    </record>

    <!-- mining.worker.group action window -->
    <record id="mining_worker_group_action" model="ir.actions.act_window">
        <field name="name">Worker Group</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mining.worker.group</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Add Worker Group
            </p>
        </field>
    </record>

</odoo>