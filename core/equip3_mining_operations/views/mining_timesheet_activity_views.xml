<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mining_timesheet_activity_form" model="ir.ui.view">
        <field name="name">mining.timesheet.activity.form</field>
        <field name="model">mining.timesheet.activity</field>
        <field name="arch" type="xml">
            <form string='Mining Timesheet Activity'>
                 <sheet>
                     <group>
                         <group>
                            <field name="name"/>
                            <field name="activity_type"/>
                          </group>
                         <group>
                            <field name="company_id"/>
                            <field name="branch_id" options="{'no_create': True}" domain="[('company_id', 'in', (company_id,False))]"/>
                            <field name="create_date" string="Created On" readonly="1" force_save="1"/>
                            <field name="create_uid" string="Created By" readonly="1" force_save="1"/>
                        </group>
                     </group>
             </sheet>
            </form>
        </field>
    </record>

     <record id="mining_timesheet_activity_tree" model="ir.ui.view">
        <field name="name">mining.daily.production.record.tree</field>
        <field name="model">mining.timesheet.activity</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="activity_type"/>
                <field name="company_id"/>
                <field name="branch_id"/>
                <field name="create_uid"/>
            </tree>
        </field>
    </record>

    <record id="mining_timesheet_activity_action" model="ir.actions.act_window">
        <field name="name">Mining Timesheet Activity</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mining.timesheet.activity</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your Mining Timesheet Activity !
            </p>
        </field>
    </record>

</odoo>