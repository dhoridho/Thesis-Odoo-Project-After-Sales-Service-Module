<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_mining_cost_actualization_form" model="ir.ui.view">
        <field name="model">mining.cost.actualization</field>
        <field name="inherit_id" ref="equip3_mining_reports.view_mining_cost_actualization_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']//tree/field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
            </xpath>
            <xpath expr="//field[@name='line_ids']//tree/field[@name='account_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
