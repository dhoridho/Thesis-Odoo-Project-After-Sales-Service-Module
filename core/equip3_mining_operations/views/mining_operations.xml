<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mining_operations_form" model="ir.ui.view">
        <field name="name">mining.operations.form</field>
        <field name="model">mining.operations</field>
        <field name="arch" type="xml">
            <form string='Mining Operations'>
                 <sheet>
                     <group>
                         <group>
                             <field name="name" required="1"/>
                         </group>
                     </group>
                 </sheet>
            </form>
        </field>
    </record>

     <record id="mining_operations_tree" model="ir.ui.view">
        <field name="name">mining.operations.tree</field>
        <field name="model">mining.operations</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="mining_operations_action" model="ir.actions.act_window">
        <field name="name">Mining Operations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mining.operations</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your Mining Operations !
            </p>
        </field>
    </record>

</odoo>