<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_mining_production_plan_delivery_history_form" model="ir.ui.view">
        <field name="name">view.mining.production.plan.delivery.history.form</field>
        <field name="model">mining.production.plan.delivery.history</field>
        <field name="arch" type="xml">
            <form string="Delivery History">
                <sheet>
                    <group>
                        <group>
                            <field name="delivery_id" invisible="1"/>
                            <field name="mpa_state" invisible="1"/>

                            <field name="mining_prod_plan_id" readonly="1"/>
                            <field name="mining_prod_line_id" readonly="1"/>
                            <field name="mining_prod_act_id" readonly="1"/>
                            <field name="site_id" readonly="1"/>
                            <field name="pit_id" readonly="1"/>
                            <field name="operation_id" readonly="1"/>
                            <field name="asset_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="location_src_id" attrs="{'readonly': [('mpa_state', '=', 'confirm')]}"/>
                            <field name="location_dest_id" attrs="{'readonly': [('mpa_state', '=', 'confirm')]}"/>
                            <field name="product_id" readonly="1"/>
                            <label for="amount"/>
                            <div class="o_row">
                                <field name="amount" class="oe_inline mr-8"/>
                                <field name="uom_id" class="oe_inline" attrs="{'readonly': [('mpa_state', '=', 'confirm')]}"/>
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page name="iterations" string="Iterations">
                            <field name="iteration_ids" attrs="{'readonly': [('mpa_state', '=', 'confirm')]}" context="{
                                'default_history_id': id,
                                'default_operation_id': operation_id,
                                'default_mining_prod_plan_id': mining_prod_plan_id,
                                'default_mining_prod_line_id': mining_prod_line_id,
                                'default_mining_prod_act_id': mining_prod_act_id,
                                'default_site_id': site_id,
                                'default_pit_id': pit_id,
                                'default_asset_id': asset_id,
                                'default_location_src_id': location_src_id,
                                'default_location_dest_id': location_dest_id,
                                'default_product_id': product_id,
                                'default_uom_id': uom_id
                            }">
                                <tree string="Iterations">
                                    <field name="history_id" invisible="1"/>
                                    <field name="operation_id" invisible="1"/>
                                    <field name="location_src_id"/>
                                    <field name="location_dest_id"/>
                                    <field name="product_id"/>
                                    <field name="amount"/>
                                    <field name="uom_id"/>
                                    <field name="picking_id"/> 
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_mining_production_plan_delivery_history_form_pop" model="ir.ui.view">
        <field name="name">view.mining.production.plan.delivery.history.form.pop</field>
        <field name="model">mining.production.plan.delivery.history</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="equip3_mining_operations.view_mining_production_plan_delivery_history_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="after">
                <footer>
                    <button name="action_save_and_pop_back" type="object" string="Save" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </xpath>
        </field>
    </record>

    <record id="view_mining_production_plan_delivery_iteration_form" model="ir.ui.view">
        <field name="name">view.mining.production.plan.delivery.iteration.form</field>
        <field name="model">mining.production.plan.delivery.iteration</field>
        <field name="arch" type="xml">
            <form string="Delivery Iteration">
                <sheet>
                    <group>
                        <group>
                            <field name="history_id" invisible="1"/>

                            <field name="mining_prod_plan_id" readonly="1" force_save="1"/>
                            <field name="mining_prod_line_id" readonly="1" force_save="1"/>
                            <field name="mining_prod_act_id" readonly="1" force_save="1"/>
                            <field name="site_id" readonly="1" force_save="1"/>
                            <field name="pit_id" readonly="1" force_save="1"/>
                            <field name="operation_id"  readonly="1" force_save="1"/>
                            <field name="asset_id" readonly="1" force_save="1"/>
                        </group>
                        <group>
                            <field name="location_src_id" attrs="{'readonly': [('picking_id', '!=', False)]}"/>
                            <field name="location_dest_id" attrs="{'readonly': [('picking_id', '!=', False)]}"/>
                            <field name="product_id" readonly="1" force_save="1"/>
                            <label for="amount"/>
                            <div class="o_row">
                                <field name="amount" class="oe_inline mr-8" required="1" attrs="{'readonly': [('picking_id', '!=', False)]}"/>
                                <field name="uom_id" class="oe_inline" attrs="{'readonly': [('picking_id', '!=', False)]}"/>
                            </div>
                            <field name="picking_id" attrs="{'invisible': [('picking_id', '=', False)]}"/> 
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_mining_production_plan_delivery_iteration_form_pop" model="ir.ui.view">
        <field name="name">view.mining.production.plan.delivery.iteration.form.pop</field>
        <field name="model">mining.production.plan.delivery.iteration</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="equip3_mining_operations.view_mining_production_plan_delivery_iteration_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="after">
                <footer>
                    <button name="action_save_and_pop_back" type="object" string="Save" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </xpath>
        </field>
    </record>
</odoo>