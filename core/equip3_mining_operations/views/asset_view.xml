<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="maintenance_asset_capacity_view_form" model="ir.ui.view">
      <field name="name">asset.view.capacity.form</field>
      <field name="model">maintenance.equipment</field>
      <field name="priority" eval='20'/>
      <field name="inherit_id" ref="equip3_asset_fms_masterdata.inherit_equip_view_id"/>
      <field name="arch" type="xml">
            <xpath expr="//page[@name='asset_information']/group/group/field[@name='serial_no']" position="after">
                <label for="capacity_asset"/>
                <div class="oe_inline">
                    <field class="col-md-5 p-0 mx-1 oe_inline" name="capacity_asset"/>
                    <field class="col-md-4 oe_inline" name="capacity_asset_uom" options="{'no_create_edit': True, 'no_create': True}"/>
                </div>
            </xpath>
            <xpath expr="//page[@name='description']" position="before">
                <page name="inventory" string="Inventory">
                    <group>
                        <group>
                            <field name="is_asset_warehouse"/>
                        </group>
                        <group>
                            <field name="is_warehouse_create" invisible="1"/>
                            <field name="asset_warehouse_short_code" attrs="{'required': [('is_asset_warehouse', '=', True)], 'invisible': ['|', ('is_asset_warehouse', '=', False), ('is_warehouse_create', '=', True)]}"/>
                            <field name="warehouse_id" attrs="{'invisible': [('is_warehouse_create', '=', False)]}" readonly="1" force_save="1"/>
                        </group>
                    </group>
                </page>
            </xpath>
      </field>
    </record>

    <!-- product.template inherit form view -->
    <record id="inherit_mining_tab_product_tmpl_view_id" model="ir.ui.view">
        <field name="name">product.template.inherit.view.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Mining" name="mining">
                    <group>
                        <group>
                            <field name="mining_product_type"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- product.product inherit form view -->
    <record id="inherit_minig_tab_product_view_id" model="ir.ui.view">
        <field name="name">product.product.inherit.view.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Mining" name="mining">
                    <group>
                        <group>
                            <field name="mining_product_type"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>