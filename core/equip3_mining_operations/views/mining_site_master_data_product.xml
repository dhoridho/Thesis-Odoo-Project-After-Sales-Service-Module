<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- product.template action menuitem -->
    <record id="product_master_data_mining_action_id" model="ir.actions.act_window">
        <field name="name">Product</field>
        <field name="res_model">product.template</field>
    </record>

    <!-- product.template action kanban form -->
    <record id="product_master_data_mining_kanban_view_id" model="ir.actions.act_window.view" >
        <field name="sequence" eval="1"/>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="product.product_template_kanban_view"/>
        <field name="act_window_id" ref="equip3_mining_operations.product_master_data_mining_action_id"/>
    </record>

    <!-- product.template action tree -->
    <record id="product_master_data_mining_tree_view_id" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="product.product_template_tree_view"/>
        <field name="act_window_id" ref="equip3_mining_operations.product_master_data_mining_action_id"/>
    </record>

    <!-- product.template action view form -->
    <record id="product_master_data_mining_form_view_id" model="ir.actions.act_window.view" >
        <field name="sequence" eval="3"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="product.product_template_only_form_view"/>
        <field name="act_window_id" ref="equip3_mining_operations.product_master_data_mining_action_id"/>
    </record>

</odoo>