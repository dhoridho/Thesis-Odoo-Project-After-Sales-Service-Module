<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- product.product action menuitem -->
    <record id="product_variant_master_data_mining_action_id" model="ir.actions.act_window">
        <field name="name">Product Variant</field>
        <field name="res_model">product.product</field>
    </record>

    <!-- product.product action tree -->
    <record id="product_variant_master_data_mining_tree_view_id" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="product.product_product_tree_view"/>
        <field name="act_window_id" ref="equip3_mining_operations.product_variant_master_data_mining_action_id"/>
    </record>

    <!-- product.product action view form -->
    <record id="product_variant_master_data_mining_form_view_id" model="ir.actions.act_window.view" >
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="product.product_normal_form_view"/>
        <field name="act_window_id" ref="equip3_mining_operations.product_variant_master_data_mining_action_id"/>
    </record>

    <!-- product.product action kanban form -->
    <record id="product_variant_master_data_mining_kanban_view_id" model="ir.actions.act_window.view" >
        <field name="sequence" eval="3"/>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="product.product_kanban_view"/>
        <field name="act_window_id" ref="equip3_mining_operations.product_variant_master_data_mining_action_id"/>
    </record>

</odoo>