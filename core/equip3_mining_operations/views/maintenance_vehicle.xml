<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="maintenance_vehicle_view_form" model="ir.ui.view">
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="equip3_asset_fms_masterdata.maintenance_vehicle_view_form"/>
        <field name="arch" type="xml">
            <field name="driver_1" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
            </field>
            <field name="driver_2" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
            </field>
        </field>
    </record>

    <record id="inherit_equip_view_id" model="ir.ui.view">
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="equip3_asset_fms_masterdata.inherit_equip_view_id"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[7]/field[@name='vehicle_parts_ids']/tree/field[@name='equipment_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
            </xpath>
            <xpath expr="//notebook/page[@name='asset_information']/group[@name='grup1']/group/field[@name='partner_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
            </xpath>
        </field>
    </record>

    <record id="maintenance_equipment_form_view_inherit" model="ir.ui.view">
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="equip3_asset_fms_operation.maintenance_equipment_form_view_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='materials']/field[@name='maintenance_materials_list_ids']/tree/field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
            </xpath>
            <xpath expr="//notebook/page[@name='materials']/field[@name='maintenance_materials_list_ids']/tree/field[@name='uom_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
            </xpath>
            <xpath expr="//notebook/page[@name='materials']/field[@name='maintenance_materials_list_ids']/tree/field[@name='location_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
            </xpath>
            <xpath expr="//notebook/page[@name='materials']/field[@name='maintenance_materials_list_ids']/tree/field[@name='analytic_group_ids']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
