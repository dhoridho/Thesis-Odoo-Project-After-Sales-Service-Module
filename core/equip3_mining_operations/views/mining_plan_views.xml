<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_menu_mining_plan_form" model="ir.ui.view">
        <field name="name">view.mining.plan.form</field>
        <field name="model">mining.plan</field>
        <field name="arch" type="xml">
            <form string="Annual Mining Plan">
                <header>
                    <button name="action_confirm" type="object" string="Confirm" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="allowed_operation_ids" widget="many2many_tags" invisible="1"/>
                            <field name="allowed_operation_two_ids" widget="many2many_tags" invisible="1" force_save="1"/>
                            <field name="work_days" invisible="1"/>

                            <field name="mining_site_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="operation_id" invisible="1"/>
                            <field name="operation_two_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="year" widget="date_year"/>
                            <label for="product_id"/>
                            <div class="o_row">
                                <field name="product_id" class="oe_inline mr-2" force_save="1"/>
                                <field name="uom_id" class="oe_inline" force_save="1"/>
                            </div>
                            <label for="initial_target"/>
                            <div class="o_row">
                                <field name="initial_target" class="oe_inline mr-2"/>
                                <field name="initial_uom_id" class="oe_inline" options="{'no_create': True, 'no_create_edit': True}"/>
                            </div>
                            <label for="adjusted_target" attrs="{'invisible': [('state', '!=', 'confirm')]}"/>
                            <div class="o_row" attrs="{'invisible': [('state', '!=', 'confirm')]}">
                                <field name="adjusted_target" class="oe_inline mr-2"/>
                                <field name="adjusted_uom_id" class="oe_inline" force_save="1"/>
                            </div>
                        </group>
                        <group>
                            <field name="company_id"/>
                            <field name="is_branch_required" invisible="1"/>
                            <field name="branch_id" attrs="{'required': [('is_branch_required', '=', True)]}" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="create_date" string="Created On" readonly="1" force_save="1"/>
                            <field name="create_uid" string="Created By" readonly="1" force_save="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Monthly Target" name="month_ids">
                            <field name="month_ids">
                                <tree string="Monthly Target" editable="bottom" create="0" delete="0">
                                    <field name="plan_id" invisible="1"/>
                                    <field name="sequence" invisible="1"/>
                                    <field name="year" invisible="1"/>
                                    <field name="name" string=" "/>
                                    <field name="initial_monthly_target" force_save="1"/>
                                    <field name="work_days" sum="Total Work Days"/>
                                    <field name="adjusted_monthly_target" force_save="1" sum="Total Adjusted Monthly Target"/>
                                    <field name="uom_id" force_save="1" attrs="{'required': [('parent.operation_id', '!=', False)]}"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_menu_mining_plan_tree" model="ir.ui.view">
        <field name="name">view.mining.plan.tree</field>
        <field name="model">mining.plan</field>
        <field name="arch" type="xml">
            <tree string="Annual Mining Plan">
                <field name="name"/>
                <field name="mining_site_id"/>
                <field name="operation_id" invisible="1"/>
                <field name="operation_two_id"/>
                <field name="year"/>
                <field name="work_days"/>
                <field name="month_ids" widget="many2many_tags" invisible="1"/>
                <field name="state" widget="badge" decoration-info="state == 'confirm'"/>
            </tree>
        </field>
    </record>

    <record id="action_view_mining_plan" model="ir.actions.act_window">
        <field name="name">Annual Mining Plan</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mining.plan</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
           Create a New Annual Mining Plan
          </p>
        </field>
    </record>

</odoo>