<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mining_production_record_form" model="ir.ui.view">
        <field name="name">mining.production.record.form</field>
        <field name="model">mining.production.record</field>
        <field name="arch" type="xml">
            <form string="Production Record" create="false" edit="false">
              <sheet>
                <div class="oe_title">
                    <h1>
                        <field name="sequence"/>
                    </h1>
                </div>
                <group>
                    <group>
                        <field name="selected_operation_type" invisible="1"/>
                        <field name="mining_site_id"/>
                        <field name="mining_pit_id"/>
                        <field name="mining_operation_id"/>
                        <field name="equipment_id"/>
                        <field name="transport_id"/>
                        <field name="source_location_id"/>
                        <field name="destination_location_id"/>
                        <field name="product_id"/>

                        <label for="gross_total" string="Gross"/>
                        <div>
                            <span><field name="gross_total" style="max-width: 200px !important; margin-right:10px;"/></span>
                            <span><field name="gross_uom_id"/></span>
                        </div>
                        <label for="tare_total" string="Tare"/>
                        <div>
                            <span><field name="tare_total" style="max-width: 200px !important; margin-right:10px;"/></span>
                            <span><field name="tare_uom_id"/></span>
                        </div>
                        <label for="nett_total" string="Nett"/>
                        <div>
                            <span><field name="nett_total" style="max-width: 200px !important; margin-right:10px;"/></span>
                            <span><field name="nett_uom_id"/></span>
                        </div>
                    </group>
                    <group>
                        <field name="prod_rec_date"/>
                        <field name="company_id"/>
                        <field name="branch_id"/>
                        <field name="create_date"/>
                        <field name="create_uid"/>
                    </group>
                </group>
              </sheet>
            </form>
        </field>
    </record>

     <record id="mining_production_record_tree" model="ir.ui.view">
        <field name="name">mining.production.record.tree</field>
        <field name="model">mining.production.record</field>
        <field name="arch" type="xml">
            <tree create="0" delete="0">
                <field name="sequence"/>
                <field name="mining_site_id"/>
                <field name="mining_operation_id"/>
                <field name="prod_rec_date"/>
            </tree>
        </field>
    </record>
    <record id="mining_production_record_search" model="ir.ui.view">
        <field name="name">Mining Production Waste Removal Record Search</field>
        <field name="model">mining.production.record</field>
        <field name="arch" type="xml">
            <search string="Search Operation">
                <field name="mining_operation_id"/>
            </search>
        </field>
    </record>
    <record id="mining_production_waste_removal_record_action" model="ir.actions.act_window">
        <field name="name">Mining Production Waste Removal Record</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mining.production.record</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('mining_operation_id.operation_type_id', '=', 'waste_removal')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your Mining Production Waste Removal Record !
            </p>
        </field>
    </record>

</odoo>