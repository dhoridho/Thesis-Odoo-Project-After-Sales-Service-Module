<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_menu_mining_planning_form" model="ir.ui.view">
        <field name="name">view.mining.planning.form</field>
        <field name="model">mining.planning</field>
        <field name="arch" type="xml">
            <form string="Monthly Mining Plan" create="false">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="sequence"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="allowed_operation_ids" widget="many2many_tags" invisible="1"/>
                            <field name="allowed_operation_two_ids" widget="many2many_tags" invisible="1" force_save="1"/>
                            <field name="operation_id" invisible="1"/>
                            <field name="name"/>
                            <field name="month" invisible="1"/>
                            <field name="mining_site_id" options="{'no_create': True, 'no_create_edit': True}" domain="[('branch_id', '=', branch_id)]"/>
                            <field name="mining_pit_id" options="{'no_create': True, 'no_create_edit': True}" domain="[('mining_site_id', '=', mining_site_id)]" invisible="1"/>
                            <field name="mining_operation_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="year_month" widget="date_month_year"/>
                            <label for="product_id"/>
                            <div class="o_row">
                                <field name="product_id" class="oe_inline mr-2"/>
                                <field name="uom_id" class="oe_inline"/>
                            </div>
                            <label for="initial_target"/>
                            <div class="o_row">
                                <field name="initial_target" class="oe_inline mr-2"/>
                                <field name="initial_uom_id" class="oe_inline"/>
                            </div>
                            <label for="adjusted_target"/>
                            <div class="o_row">
                                <field name="adjusted_target" class="oe_inline mr-2"/>
                                <field name="adjusted_uom_id" class="oe_inline"/>
                            </div>
                        </group>
                        <group>
                            <field name="company_id"/>
                            <field name="branch_id" options="{'no_create': True}" domain="[('company_id', 'in', (company_id,False))]"/>
                            <field name="create_date" string="Created On" readonly="1" force_save="1"/>
                            <field name="create_uid" string="Created By" readonly="1" force_save="1"/>
                            <field name="annual_id" invisible="1"/>
                            <field name="annual_month_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Production" name="production">
                            <field name="production_ids">
                                <tree string="Production" editable="bottom" create="0" delete="0">
                                    <field name="mining_planning_id" invisible="1"/>
                                    <field name="production_date" force_save="1"/>
                                    <field name="initial_target" force_save="1"/>
                                    <field name="adjusted_target"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_menu_mining_planning_tree" model="ir.ui.view">
        <field name="name">view.mining.planning.tree</field>
        <field name="model">mining.planning</field>
        <field name="arch" type="xml">
            <tree string="Monthly Mining Plan" create="false">
                <field name="sequence"/>
                <field name="name"/>
                <field name="mining_site_id"/>
                <field name="mining_pit_id"/>
            </tree>
        </field>
    </record>

    <record id="action_mining_planning_view" model="ir.actions.act_window">
        <field name="name">Monthly Mining Plan</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mining.planning</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
           Create a New Monthly Mining Plan
          </p>
        </field>
    </record>

</odoo>