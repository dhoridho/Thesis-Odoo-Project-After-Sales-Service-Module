<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mining_daily_production_record_form" model="ir.ui.view">
        <field name="name">mining.daily.production.record.form</field>
        <field name="model">mining.daily.production.record</field>
        <field name="arch" type="xml">
            <form string='Mining Production Waste Removal Order'>
                 <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="sequence"/>
                        </h1>
                    </div>
                     <group>
                         <group>
                             <field name="selected_operation_type" invisible="1" force_save="1"/>
                            <field name="allowed_operation_ids" widget="many2many_tags" invisible="1"/>
                            <field name="allowed_operation_two_ids" widget="many2many_tags" invisible="1" force_save="1"/>
                            <field name="operation_id" invisible="1"/>
                            <field name="mining_site_id"/>
                            <field name="mining_operation_id"/>
                            <label for="start_date" string="Start Date"/>
                            <div>
                                <field name="start_date" style="max-width: 185px !important; margin-right:5px;"/>
                                <label for="end_date" string="End Date"/>
                                <field name="end_date" style="max-width: 185px !important;"/>
                            </div>
                            <label for="gross_total" string="Gross Total"/>
                            <div>
                                <span><field name="gross_total" style="max-width: 200px !important; margin-right:10px;"/></span>
                                <span><field name="gross_uom_id" force_save="1"/></span>
                            </div>
                            <label for="nett_total" string="Nett Total"/>
                            <div>
                                <span><field name="nett_total" style="max-width: 200px !important; margin-right:10px;"/></span>
                                <span><field name="nett_uom_id" force_save="1"/></span>
                            </div>
                         </group>
                         <group>
                            <field name="company_id"/>
                            <field name="branch_id" options="{'no_create': True}" domain="[('company_id', 'in', (company_id,False))]"/>
                            <field name="create_date" string="Created On" readonly="1" force_save="1"/>
                            <field name="create_uid" string="Created By" readonly="1" force_save="1"/>
                        </group>
                     </group>
                    <notebook>
                        <page string="Production Record" name="production_record">
                            <field name="production_record_ids">
                                <tree string="Production Record">
                                    <field name="sequence"/>
                                    <field name="prod_rec_date"/>
                                    <field name="product_id"/>
                                    <field name="gross_total"/>
                                    <field name="tare_total"/>
                                    <field name="nett_total"/>
                                </tree>
                                <form string="Production Record">
                                  <sheet>
                                    <div class="oe_title">
                                        <h1>
                                            <field name="sequence"/>
                                        </h1>
                                    </div>
                                    <group>
                                        <group>
                                            <field name="selected_operation_type" invisible="1" force_save="1"/>
                                            <field name="mining_site_id" force_save="1"/>
                                            <field name="mining_pit_id"
                                                   attrs="{'required': [('selected_operation_type', '!=', 'hauling')], 'invisible':[('selected_operation_type', '=', 'hauling')]}"/>
                                            <field name="mining_operation_id" force_save="1"/>
                                            <field name="equipment_id"
                                                   attrs="{'required': [('selected_operation_type', '!=', 'hauling')], 'invisible':[('selected_operation_type', '=', 'hauling')]}"/>
                                            <field name="transport_id"/>
                                            <field name="source_location_id" domain="[('branch_id', '=', branch_id), ('active', '=', True)]"/>
                                            <field name="destination_location_id" domain="[('branch_id', '=', branch_id), ('active', '=', True)]"/>
                                            <field name="product_id"/>

                                            <label for="gross_total" string="Gross"/>
                                            <div>
                                                <span><field name="gross_total" required="1" style="max-width: 200px !important; margin-right:10px;"/></span>
                                                <span><field name="gross_uom_id" force_save="1"/></span>
                                            </div>
                                            <label for="tare_total" string="Tare"/>
                                            <div>
                                                <span><field name="tare_total" required="1" style="max-width: 200px !important; margin-right:10px;"/></span>
                                                <span><field name="tare_uom_id" force_save="1"/></span>
                                            </div>
                                            <label for="nett_total" string="Nett"/>
                                            <div>
                                                <span><field name="nett_total" force_save="1" style="max-width: 200px !important; margin-right:10px;"/></span>
                                                <span><field name="nett_uom_id" force_save="1"/></span>
                                            </div>
                                        </group>
                                        <group>
                                            <field name="prod_rec_date"/>
                                            <field name="company_id" force_save="1"/>
                                            <field name="branch_id" options="{'no_create': True}" force_save="1"/>
                                            <field name="create_date" string="Created On" readonly="1" force_save="1"/>
                                            <field name="create_uid" string="Created By" readonly="1" force_save="1"/>
                                        </group>
                                    </group>
                                  </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                 </sheet>
            </form>
        </field>
    </record>

     <record id="mining_daily_production_record_tree" model="ir.ui.view">
        <field name="name">mining.daily.production.record.tree</field>
        <field name="model">mining.daily.production.record</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence"/>
                <field name="mining_site_id"/>
                <field name="mining_operation_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </tree>
        </field>
    </record>
    <record id="mining_daily_production_record_search" model="ir.ui.view">
        <field name="name">Mining Production Waste Removal Order Search</field>
        <field name="model">mining.daily.production.record</field>
        <field name="arch" type="xml">
            <search string="Search Operation">
                <field name="mining_operation_id"/>
            </search>
        </field>
    </record>
    <record id="mining_production_waste_removal_order_action" model="ir.actions.act_window">
        <field name="name">Mining Production Waste Removal Order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mining.daily.production.record</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('mining_operation_id.operation_type_id', '=', 'waste_removal')]</field>
        <field name="context">{'default_selected_operation_type': 'waste_removal'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your Mining Production Waste Removal Order !
            </p>
        </field>
    </record>

</odoo>