<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mining_timesheet_production_form" model="ir.ui.view">
        <field name="name">mining.timesheet.production.form</field>
        <field name="model">mining.timesheet.production</field>
        <field name="arch" type="xml">
            <form string='Mining Timesheet'>
                <header>
                    <button name="action_confirm" type="object" string="Confirm" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                 <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="sequence"/>
                        </h1>
                    </div>
                     <group>
                         <group>
                            <field name="allowed_operation_ids" widget="many2many_tags" invisible="1"/>
                            <field name="allowed_operation_two_ids" widget="many2many_tags" invisible="1" force_save="1"/>
                            <field name="operation_id" invisible="1"/>
                            <field name="mining_site_id"/>
                            <field name="mining_operation_id"/>
                            <field name="equipment_id"/>
                            <field name="equipment_vehicle_checkbox" invisible="1"/>
                            <field name="last_odometer" force_save="1" attrs="{'invisible': [('equipment_vehicle_checkbox', '=', False)]}"/>
                            <field name="last_hourmeter" force_save="1"/>
                            <field name="odometer" attrs="{'invisible': [('equipment_vehicle_checkbox', '=', False)]}"/>
                            <field name="hourmeter"/>
                            <field name="start_date"/>
                            <field name="end_date" force_save="1"/>
                          </group>
                         <group>
                            <field name="company_id"/>
                            <field name="branch_id" options="{'no_create': True}" domain="[('company_id', 'in', (company_id,False))]"/>
                            <field name="create_date" string="Created On" readonly="1" force_save="1"/>
                            <field name="create_uid" string="Created By" readonly="1" force_save="1"/>
                        </group>
                     </group>
                     <notebook>
                        <page string="Time Sheet" name="time_sheet">
                            <field name="timesheet_record_ids">
                                <tree string="Time Sheet" editable="bottom">
                                    <field name="start_time_tmp" invisible="1"/>
                                    <field name="start_time" force_save="1"/>
                                    <field name="end_time"/>
                                    <field name="operator_id" options="{'no_create_edit': True, 'no_create': True}"/>
                                    <field name="activity_type"/>
                                    <field name="activity_id" domain="[('activity_type', '=', activity_type)]" options="{'no_create_edit': True, 'no_create': True}"/>
                                    <field name="notes"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

     <record id="mining_timesheet_production_tree" model="ir.ui.view">
        <field name="name">mining.timesheet.production.tree</field>
        <field name="model">mining.timesheet.production</field>
        <field name="arch" type="xml">
            <tree>
                <field name="mining_site_id"/>
                <field name="mining_operation_id"/>
                <field name="equipment_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="state" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="mining_production_timesheet_action" model="ir.actions.act_window">
        <field name="name">Mining Timesheet</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mining.timesheet.production</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your Mining Timesheet Activity !
            </p>
        </field>
    </record>

</odoo>