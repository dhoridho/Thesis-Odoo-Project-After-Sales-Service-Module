<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mining_daily_production_order_form" model="ir.ui.view">
        <field name="name">mining.daily.production.record.form</field>
        <field name="model">mining.daily.production.record</field>
        <field name="arch" type="xml">
            <form string='Production Order'>
                <header>
                    <button name="action_confirm" type="object" string="Confirm" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_create_record" type="object" string="Create Record" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'confirm')]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                 <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button"
                                name="action_view_stock_moves"
                                icon="fa-exchange"
                                type="object" 
                                attrs="{'invisible':[('stock_moves_count', '=', 0)]}">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="stock_moves_count" widget="statinfo" nolabel="1"/>
                                    </span>
                                    <span class="o_stat_text">Moves</span>
                                </div>
                        </button>
                    </div>
                     <group>
                         <group>
                            <field name="selected_operation_type" invisible="1" force_save="1"/>
                            <field name="mining_site_id" attrs="{'required': [('selected_operation_type', '!=', 'shipment')], 'invisible':[('selected_operation_type', '=', 'shipment')]}" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="mining_operation_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="date" attrs="{'invisible':[('selected_operation_type', 'not in', ('extraction', 'waste_removal', 'hauling', 'processing'))], 'required': [('selected_operation_type', 'in', ('extraction', 'waste_removal', 'hauling', 'processing'))]}"/>
                            <label for="start_date" string="Start Date" attrs="{'invisible':[('selected_operation_type', 'in', ('shipment', 'extraction', 'waste_removal', 'hauling', 'processing'))]}"/>
                            <div attrs="{'invisible':[('selected_operation_type', 'in', ('shipment', 'extraction', 'waste_removal', 'hauling', 'processing'))]}">
                                <field name="start_date" style="max-width: 185px !important; margin-right:5px;" attrs="{'required': [('selected_operation_type', 'not in', ('shipment', 'extraction', 'waste_removal', 'hauling', 'processing'))]}"/>
                                <label for="end_date" string="End Date"/>
                                <field name="end_date" style="max-width: 185px !important;" attrs="{'required': [('selected_operation_type', 'not in', ('shipment', 'extraction', 'waste_removal', 'hauling', 'processing'))]}"/>
                            </div>
                            <label for="gross_total" string="Gross Total" attrs="{'invisible':[('selected_operation_type', 'in', ('processing', 'shipment'))]}"/>
                            <div attrs="{'invisible':[('selected_operation_type', 'in', ('processing', 'shipment'))]}">
                                <span><field name="gross_total" style="max-width: 200px !important; margin-right:10px;"/></span>
                                <span><field name="gross_uom_id" force_save="1"/></span>
                            </div>
                            <label for="nett_total" string="Nett Total" attrs="{'invisible':[('selected_operation_type', 'in', ('processing', 'shipment'))]}"/>
                            <div attrs="{'invisible':[('selected_operation_type', 'in', ('processing', 'shipment'))]}">
                                <span><field name="nett_total" style="max-width: 200px !important; margin-right:10px;"/></span>
                                <span><field name="nett_uom_id" force_save="1"/></span>
                            </div>
                            <label for="input_total" string="Input Total" attrs="{'invisible':[('selected_operation_type', '!=', 'processing')]}"/>
                            <div attrs="{'invisible':[('selected_operation_type', '!=', 'processing')]}">
                                <span><field name="input_total" style="max-width: 200px !important; margin-right:10px;"/></span>
                                <span><field name="input_uom_id" force_save="1"/></span>
                            </div>
                            <label for="output_total" string="Output Total" attrs="{'invisible':[('selected_operation_type', '!=', 'processing')]}"/>
                            <div attrs="{'invisible':[('selected_operation_type', '!=', 'processing')]}">
                                <span><field name="output_total" style="max-width: 200px !important; margin-right:10px;"/></span>
                                <span><field name="output_uom_id" force_save="1"/></span>
                            </div>
                            <label for="loss_total" string="Loss Total" attrs="{'invisible':[('selected_operation_type', '!=', 'processing')]}"/>
                            <div attrs="{'invisible':[('selected_operation_type', '!=', 'processing')]}">
                                <span><field name="loss_total" style="max-width: 200px !important; margin-right:10px;"/></span>
                                <span><field name="loss_uom_id" force_save="1"/></span>
                            </div>

                             <field name="vessel_id" attrs="{'required': [('selected_operation_type', '=', 'shipment')], 'invisible':[('selected_operation_type', '!=', 'shipment')]}" options="{'no_create': True, 'no_create_edit': True}"/>
                             <field name="sale_order_id" attrs="{'invisible':[('selected_operation_type', '!=', 'shipment')]}" options="{'no_create': True, 'no_create_edit': True}"/>
                             <field name="partner_id" attrs="{'invisible':[('selected_operation_type', '!=', 'shipment')]}" options="{'no_create': True, 'no_create_edit': True}"/>
                             <field name="source_location_id" attrs="{'required': [('selected_operation_type', '=', 'shipment')], 'invisible':[('selected_operation_type', '!=', 'shipment')]}" options="{'no_create': True, 'no_create_edit': True}"/>
                             <field name="destination_location_id" force_save="1" attrs="{
                             'readonly': [('sale_order_id', '!=', False)],
                             'required': [('selected_operation_type', '=', 'shipment')],
                             'invisible':[('selected_operation_type', '!=', 'shipment')]}" options="{'no_create': True, 'no_create_edit': True}"/>
                             <field name="incoterm" attrs="{'invisible':[('selected_operation_type', '!=', 'shipment')]}"/>
                             <field name="production_target" force_save="1" attrs="{'invisible': [('selected_operation_type', 'not in', ('extraction', 'waste_removal', 'hauling', 'processing'))]}"/>
                         </group>
                         <group>
                            <field name="schedule_date" attrs="{'required': [('selected_operation_type', '=', 'shipment')], 'invisible':[('selected_operation_type', '!=', 'shipment')]}"/>
                            <field name="company_id"/>
                            <field name="branch_id" options="{'no_create': True}" domain="[('company_id', 'in', (company_id,False))]"/>
                            <field name="create_date" string="Created On" readonly="1" force_save="1"/>
                            <field name="create_uid" string="Created By" readonly="1" force_save="1"/>
                            <field name="stock_move_ids" widget="many2many_tags" invisible="1"/>
                        </group>
                     </group>
                    <notebook>
                        <page string="Production Record" name="production_record">
                            <field name="production_record_ids" context="{
                                'default_selected_operation_type': selected_operation_type,
                                'form_view_ref': 'equip_mining_operations.mining_production_record_processing_form'
                            }">
                                <tree string="Production Record" create="0" edit="0">
                                    <field name="selected_operation_type" invisible="1"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="branch_id" invisible="1"/>
                                    <field name="name"/>
                                    <field name="prod_rec_date" attrs="{'column_invisible': [('parent.selected_operation_type', '=', 'shipment')]}"/>
                                    <field name="product_id" attrs="{'column_invisible': [('parent.selected_operation_type', '=', 'processing')]}"/>
                                    <field name="gross_total" attrs="{'column_invisible':[('parent.selected_operation_type', 'in', ('processing', 'shipment'))]}"/>
                                    <field name="tare_total" attrs="{'column_invisible':[('parent.selected_operation_type', 'in', ('processing', 'shipment'))]}"/>
                                    <field name="nett_total" attrs="{'column_invisible':[('parent.selected_operation_type', 'in', ('processing', 'shipment'))]}"/>
                                    <field name="input_total" attrs="{'column_invisible': [('parent.selected_operation_type', '!=', 'processing')]}"/>
                                    <field name="output_total" attrs="{'column_invisible': [('parent.selected_operation_type', '!=', 'processing')]}"/>
                                    <field name="loss_total" attrs="{'column_invisible': [('parent.selected_operation_type', '!=', 'processing')]}"/>
                                    <field name="description" attrs="{'column_invisible': [('parent.selected_operation_type', '!=', 'shipment')]}"/>
                                    <field name="remaining" attrs="{'column_invisible': [('parent.selected_operation_type', '!=', 'shipment')]}"/>
                                    <field name="product_uom_qty" attrs="{'column_invisible': [('parent.selected_operation_type', '!=', 'shipment')]}"/>
                                    <field name="quantity_done" attrs="{'column_invisible': [('parent.selected_operation_type', '!=', 'shipment')]}"/>
                                    <field name="product_uom" attrs="{'column_invisible': [('parent.selected_operation_type', '!=', 'shipment')]}"/>
                                    <field name="source_location_id" optional="hide"/>
                                    <field name="state" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Cost Details" name="cost_details" attrs="{'invisible': [('stock_valuation_layer_ids', '=', [])]}">
                            <field name="stock_valuation_layer_ids">
                                <tree string="Cost Details">
                                    <field name="mining_type" string="Type"/>
                                    <field name="product_id"/>
                                    <field name="value"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                 </sheet>
            </form>
        </field>
    </record>

     <record id="mining_daily_production_order_processing_tree" model="ir.ui.view">
        <field name="name">mining.daily.production.record.tree</field>
        <field name="model">mining.daily.production.record</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="mining_site_id"/>
                <field name="mining_operation_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'confirm'"/>
            </tree>
        </field>
    </record>

    <record id="mining_daily_production_order_date_tree" model="ir.ui.view">
        <field name="name">mining.daily.production.date.tree</field>
        <field name="model">mining.daily.production.record</field>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="mining_site_id"/>
                <field name="mining_operation_id"/>
                <field name="date"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'confirm'"/>
            </tree>
        </field>
    </record>

    <record id="mining_daily_production_order_processing_search" model="ir.ui.view">
        <field name="name">Mining Production Processing Order Search</field>
        <field name="model">mining.daily.production.record</field>
        <field name="arch" type="xml">
            <search string="Search Operation">
                <field name="mining_operation_id"/>
            </search>
        </field>
    </record>

    <record id="mining_daily_production_order_shipment_tree" model="ir.ui.view">
        <field name="name">mining.daily.production.record.tree</field>
        <field name="model">mining.daily.production.record</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="mining_operation_id"/>
                <field name="vessel_id"/>
                <field name="schedule_date"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'confirm'"/>
            </tree>
        </field>
    </record>

    <record id="mining_production_order_shipment_action" model="ir.actions.act_window">
        <field name="name">Mining Production Shipment Order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mining.daily.production.record</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="mining_daily_production_order_shipment_tree"/>
        <field name="domain">[('mining_operation_id.operation_type_id', '=', 'shipment')]</field>
        <field name="context">{'default_selected_operation_type': 'shipment'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your Mining Production Shipment Order !
            </p>
        </field>
    </record>

    <record id="mining_production_order_processing_action" model="ir.actions.act_window">
        <field name="name">Mining Production Processing Order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mining.daily.production.record</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('mining_operation_id.operation_type_id', '=', 'processing')]</field>
        <field name="context">{'default_selected_operation_type': 'processing'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your Mining Production Processing Order !
            </p>
        </field>
    </record>

    <record id="mining_production_extraction_order_action" model="ir.actions.act_window">
        <field name="name">Mining Production Extraction Order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mining.daily.production.record</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('mining_operation_id.operation_type_id', '=', 'extraction')]</field>
        <field name="context">{'default_selected_operation_type': 'extraction'}</field>
        <field name="view_ids" eval="[(5,), 
            (0, 0, {'view_mode': 'tree', 'view_id': ref('mining_daily_production_order_date_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('mining_daily_production_order_form')}),
        ]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your Mining Production Extraction Order !
            </p>
        </field>
    </record>

    <record id="mining_production_hauling_order_action" model="ir.actions.act_window">
        <field name="name">Mining Production Hauling Order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mining.daily.production.record</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('mining_operation_id.operation_type_id', '=', 'hauling')]</field>
        <field name="context">{'default_selected_operation_type': 'hauling'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your Mining Production Hauling Order !
            </p>
        </field>
    </record>

    <record id="mining_production_waste_removal_order_action" model="ir.actions.act_window">
        <field name="name">Mining Production Waste Removal Order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mining.daily.production.record</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('mining_operation_id.operation_type_id', '=', 'waste_removal')]</field>
        <field name="context">{'default_selected_operation_type': 'waste_removal'}</field>
        <field name="view_ids" eval="[(5,), 
            (0, 0, {'view_mode': 'tree', 'view_id': ref('mining_daily_production_order_date_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('mining_daily_production_order_form')}),
        ]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your Mining Production Waste Removal Order !
            </p>
        </field>
    </record>
</odoo>