<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_mining_approval_matrix_form" model="ir.ui.view">
        <field name="name">view.mining.approval.matrix.form</field>
        <field name="model">mining.approval.matrix</field>
        <field name="inherit_id" ref="equip3_mining_accessright_settings.view_mining_approval_matrix_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="matrix_type" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="view_mining_approval_matrix_entry_tree" model="ir.ui.view">
        <field name="name">view.mining.approval.matrix.entry.tree</field>
        <field name="model">mining.approval.matrix.entry</field>
        <field name="inherit_id" ref="equip3_mining_accessright_settings.view_mining_approval_matrix_entry_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']" position="after">
                <field name="matrix_type" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="view_mining_approval_matrix_entry_form" model="ir.ui.view">
        <field name="name">view.mining.approval.matrix.entry.form</field>
        <field name="model">mining.approval.matrix.entry</field>
        <field name="inherit_id" ref="equip3_mining_accessright_settings.view_mining_approval_matrix_entry_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_id']" position="after">
                <field name="matrix_type" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="action_view_mining_approval_matrix_mining_site" model="ir.actions.act_window">
        <field name="name">Mining Site Approval Matrix</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mining.approval.matrix</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="equip3_mining_accessright_settings.view_mining_approval_matrix_tree"/>
        <field name="domain">[('matrix_type', '=', 'msc')]</field>
        <field name="context">{'default_matrix_type':'msc'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Mining Site Approval Matrix
            </p>
        </field>
    </record>

