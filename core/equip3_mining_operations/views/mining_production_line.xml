<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- mining.production.line pivot view -->
    <record id="mining_production_line_view_pivot" model="ir.ui.view">
        <field name="name">mining.production.line.view.pivot</field>
        <field name="model">mining.production.line</field>
        <field name="arch" type="xml">
            <pivot string="Pivot Description">
                <!-- Add your fields here -->
                
            </pivot>
        </field>
    </record>

    <!-- mining.production.line form view -->
    <record id="mining_production_line_view_form" model="ir.ui.view">
        <field name="name">mining.production.line.view.form</field>
        <field name="model">mining.production.line</field>
        <field name="arch" type="xml">
            <form string="Production Lines">
                <header>
                    <field name="user_is_approver" invisible="1"/>
                    <button name="action_approval" string="Request Approval" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('is_matrix_on', '!=', True), ('state', '!=', 'draft')]}"/>
                    <button name="action_approve" string="Approve" type="object" class="oe_highlight"  attrs="{'invisible': ['|', '|', ('is_matrix_on', '!=', True), ('state', '!=', 'to_be_approved'), ('user_is_approver', '=', False)]}"/>
                    <button name="action_reject" string="Reject" type="object" class="oe_highlight" attrs="{'invisible': ['|', '|', ('is_matrix_on', '!=', True), ('state', '!=', 'to_be_approved'), ('user_is_approver', '=', False)]}"/>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" attrs="{'invisible': ['|', '&amp;', ('is_matrix_on', '=', True), ('state', '!=', 'approved'), '&amp;', ('is_matrix_on', '=', False), ('state', 'not in', ('draft', 'approved'))]}"/>
                    <button name="action_actualization" string="Actualization" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('state', 'not in', ('confirm', 'progress')), ('mining_prod_plan_id', '=', False)]}"/>
                    <button name="action_done" string="Mark As Done" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'progress')]}" groups="equip3_mining_accessright_settings.group_mining_administrator,equip3_mining_accessright_settings.group_mining_manager"/>
                    <button name="action_cancel" string="Cancel" type="object" class="oe_highlight" attrs="{'invisible': [('state', 'in', ('draft', 'cancel', 'done', 'rejected'))]}" groups="equip3_mining_accessright_settings.group_mining_administrator,equip3_mining_accessright_settings.group_mining_manager"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done" attrs="{'invisible': [('state', 'in', ('cancel', 'rejected'))]}"/>
                    <field name="state_1" widget="statusbar" statusbar_visible="draft,cancel" attrs="{'invisible': [('state', '!=', 'cancel')]}"/>
                    <field name="state_2" widget="statusbar" statusbar_visible="draft,rejected" attrs="{'invisible': ['|', ('is_matrix_on', '=', False), ('state', '!=', 'rejected')]}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="priority" widget="priority" class="mr-3"/>
                            <field name="name" nolabel="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="mining_prod_plan_id" options="{'no_create': True, 'no_create_edit': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="mining_site_id" options="{'no_create': True, 'no_create_edit': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="mining_project_id" options="{'no_create': True, 'no_create_edit': True}" string="Mining Pit" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <label for="period_from"/>
                            <div class="o_row" name="period">
                                <field name="period_from" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <span>To</span>
                                <field name="period_to" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </div>
                            <field name="operation_id" domain="[('id', 'in', operation_ids)]" attrs="{'readonly': [('state', '!=', 'draft')]}" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="approval_matrix_id" attrs="{'invisible': [('is_matrix_on', '=', False)],'required': [('is_matrix_on', '!=', False), ('state', '=', 'draft')]}" force_save="1"/>
                            <field name="ppic_id" attrs="{'readonly': [('state', '!=', 'draft')]}" options="{'no_create': True, 'no_create_edit': True}"/>

                            <field name="is_matrix_on" invisible="1"/>
                            <field name="operation_type" invisible="1"/>
                            <field name="operation_ids" widget="many2many_tags" invisible="1"/>
                        </group>
                        <group>
                            <field name="analytic_group_ids" widget="many2many_tags" required="1" force_save="1" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="company_id"/>
                            <field name="is_branch_required" invisible="1"/>
                            <field name="branch_id" attrs="{'readonly': [('state','!=','draft')], 'required': [('is_branch_required', '=', True)]}" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="create_date" string="Created On" readonly="1"/>
                            <field name="create_uid" string="Created By" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Assets" name="assets">
                            <field name="assets_ids" attrs="{'readonly': [('state', '!=', 'draft')]}" context="{
                                    'default_worker_ids': worker_ids, 
                                    'default_mining_prod_plan_id': mining_prod_plan_id,
                                    'default_operation_id': operation_id,
                                    'default_original_move': True
                                }">
                                <tree editable="bottom">
                                    <field name="mining_prod_plan_id" invisible="1"/>
                                    <field name="mining_prod_line_id" invisible="1"/>
                                    <field name="mining_prod_act_id" attrs="{'column_invisible': [('parent.state', '=', 'draft')]}" readonly="1" string="Actualization"/>
                                    <field name="operation_ids" widget="many2many_tags" optional="hide"/>
                                    <field name="assets_ids" widget="many2many_tags" optional="hide"/>
                                    <field name="operation_id" readonly="1" force_save="1"/>
                                    <field name="assets_id"/>
                                    <field name="duration"/>
                                    <field name="worker_ids" widget="many2many_tags"/>
                                    <field name="original_move" optional="hide"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Input" name="input" attrs="{'invisible': [('operation_type', '!=', 'production')]}">
                            <field name="input_ids" 
                                   attrs="{
                                        'readonly': [('state', '!=', 'draft')]
                                    }"
                                   context="{
                                        'default_mining_prod_plan_id': mining_prod_plan_id,
                                        'default_operation_id': operation_id,
                                        'default_original_move': True
                                    }">
                                <tree editable="bottom">
                                    <field name="mining_prod_plan_id" invisible="1"/>
                                    <field name="mining_prod_line_id" invisible="1"/>
                                    <field name="mining_prod_act_id" attrs="{'column_invisible': [('parent.state', '=', 'draft')]}" readonly="1" string="Actualization"/>
                                    <field name="operation_ids" widget="many2many_tags" optional="hide"/>
                                    <field name="asset_ids" widget="many2many_tags" optional="hide"/>
                                    <field name="product_ids" widget="many2many_tags" optional="hide"/>
                                    <field name="operation_id" invisible="1"/>
                                    <field name="asset_id"/>
                                    <field name="product_id"/>
                                    <field name="qty"/>
                                    <field name="uom_id"/>
                                    <field name="original_move" optional="hide"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Output" name="output">
                            <field name="output_ids" 
                                   attrs="{
                                        'readonly': [('state', '!=', 'draft')]
                                    }" 
                                    context="{
                                        'default_mining_prod_plan_id': mining_prod_plan_id,
                                        'default_operation_id': operation_id,
                                        'default_original_move': True
                                    }">
                                <tree editable="bottom">
                                    <field name="mining_prod_plan_id" invisible="1"/>
                                    <field name="mining_prod_line_id" invisible="1"/>
                                    <field name="mining_prod_act_id" attrs="{'column_invisible': [('parent.state', '=', 'draft')]}" readonly="1" string="Actualization"/>
                                    <field name="operation_ids" widget="many2many_tags" optional="hide"/>
                                    <field name="asset_ids" widget="many2many_tags" optional="hide"/>
                                    <field name="product_ids" widget="many2many_tags" optional="hide"/>
                                    <field name="operation_id" invisible="1"/>
                                    <field name="asset_id"/>
                                    <field name="product_id"/>
                                    <field name="qty"/>
                                    <field name="uom_id"/>
                                    <field name="original_move" optional="hide"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Fuel" name="fuel">
                            <field name="fuel_ids" 
                                   attrs="{
                                        'readonly': [('state', '!=', 'draft')]
                                    }"
                                    context="{
                                        'default_mining_prod_plan_id': mining_prod_plan_id,
                                        'default_operation_id': operation_id,
                                        'default_original_move': True
                                    }">
                                <tree string="Fuel" editable="bottom">
                                    <field name="mining_prod_plan_id" invisible="1"/>
                                    <field name="mining_prod_line_id" invisible="1"/>
                                    <field name="mining_prod_act_id" attrs="{'column_invisible': [('parent.state', '=', 'draft')]}" readonly="1" string="Actualization"/>
                                    <field name="operation_ids" widget="many2many_tags" optional="hide"/>
                                    <field name="asset_ids" widget="many2many_tags" optional="hide"/>
                                    <field name="product_ids" widget="many2many_tags" optional="hide"/>
                                    <field name="operation_id" invisible="1"/>
                                    <field name="asset_id"/>
                                    <field name="product_id"/>
                                    <field name="qty" string="To Consume"/>
                                    <field name="uom_id"/>
                                    <field name="original_move" optional="hide"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Delivery" name="delivery" attrs="{'invisible': [('operation_type', '!=', 'shipment')]}">
                            <field name="delivery_ids" 
                                   attrs="{
                                        'readonly': [('state', '!=', 'draft')]
                                    }"
                                    context="{
                                        'default_mining_prod_plan_id': mining_prod_plan_id,
                                        'default_operation_id': operation_id,
                                        'default_site_id': mining_site_id,
                                        'default_original_move': True
                                    }">
                                <tree string="Delivery" editable="bottom">
                                    <field name="mining_prod_plan_id" invisible="1"/>
                                    <field name="mining_prod_line_id" invisible="1"/>
                                    <field name="mining_prod_act_id" attrs="{'column_invisible': [('parent.state', '=', 'draft')]}" readonly="1" string="Actualization"/>
                                    <field name="operation_ids" widget="many2many_tags" optional="hide"/>
                                    <field name="asset_ids" widget="many2many_tags" optional="hide"/>
                                    <field name="product_ids" widget="many2many_tags" optional="hide"/>
                                    <field name="operation_id" invisible="1"/>
                                    <field name="site_id" invisible="1"/>
                                    <field name="asset_id"/>
                                    <field name="location_src_id"/>
                                    <field name="location_dest_id"/>
                                    <field name="product_id"/>
                                    <field name="amount"/>
                                    <field name="uom_id"/>
                                    <field name="original_move" optional="hide"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Worker" name="worker">
                            <group>
                                <group>
                                    <field name="worker_type" widget="radio" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    <field name="worker_group_id" attrs="{'invisible': [('worker_type','=','without_group')], 'readonly': [('state', '!=', 'draft')]}" string="Worker"/>
                                    <field name="worker_ids" widget="many2many_tags" attrs="{'invisible': [('worker_type','=','with_group')], 'readonly': [('state', '!=', 'draft')]}"/>
                                </group>
                            </group>
                        </page>
                        <page string="Actualizations" name="actualizations" attrs="{'invisible': [('actualization_ids', '=', [])]}">
                            <field name="actualization_ids">
                                <tree string="Actualizations">
                                    <field name="name"/>
                                    <field name="ppic_id"/>
                                    <field name="create_date" string="Created On"/>
                                    <field name="state" widget="badge" decoration-primary2="state == 'confirm'" decoration-warning="state == 'progress'" decoration-success2="state == 'done'" decoration-danger="state =='rejected'" decoration-muted="state =='draft'" decoration-secondary="state =='cancel'" decoration-primary3="state =='to_be_approved'" decoration-primary="state =='approved'"/>
                                </tree>
                            </field>
                        </page>
                        <page name="approval_matrix_lines" string="Approval Matrix Lines" attrs="{'invisible': [('is_matrix_on', '!=', True)]}">
                            <field name="approval_matrix_line_ids" context="{
                                'tree_view_ref': 'equip3_mining_accessright_settings.view_mining_approval_matrix_entry_tree',
                                'form_view_ref': 'equip3_mining_accessright_settings.view_mining_approval_matrix_entry_form',
                            }"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- mining.production.line tree view -->
    <record id="mining_production_line_view_tree" model="ir.ui.view">
        <field name="name">mining.production.line.view.tree</field>
        <field name="model">mining.production.line</field>
        <field name="arch" type="xml">
            <tree string="Production Line" default_order="priority desc, name desc">
                <field name="priority" widget="priority" nolabel="1"/>
                <field name="name"/>
                <field name="mining_prod_plan_id"/>
                <field name="operation_id"/>
                <field name="ppic_id"/>
                <field name="create_date" string="Created On"/>
                <field name="state" widget="badge" decoration-success="state == 'done'" decoration-warning="state == 'progress'" decoration-info="state in ('to_be_approved', 'approved', 'confirm')"/>
            </tree>
        </field>
    </record>

    <!-- mining.production.line search view -->
    <record id="mining_production_line_view_search" model="ir.ui.view">
        <field name="name">mining.production.line.view.search</field>
        <field name="model">mining.production.line</field>
        <field name="arch" type="xml">
            <search string="Search Production Lines">
                <field name="name"/>
                <field name="mining_prod_plan_id"/>
                <field name="operation_id"/>
                <field name="mining_site_id"/>
                <field name="mining_project_id" string="Mining Pit"/>
                <field name="ppic_id"/>

                <searchpanel>
                    <field name="operation_id"/>
                    <field name="mining_site_id"/>
                    <field name="mining_project_id" string="Mining Pit"/>
                    <field name="ppic_id"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- mining.production.line action window -->
    <record id="mining_production_line_action" model="ir.actions.act_window">
        <field name="name">Production Lines</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mining.production.line</field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="context">{'should_assign_plan': True}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Add Production Lines
            </p>
        </field>
    </record>

</odoo>