<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.mining</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="equip3_mining_accessright_settings.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='equip3_mining_accessright_settings']" position="inside">
                    <h2>Approval Matrix</h2>
                    <div class="row mt16 o_settings_container" name="approval_matrix_mining_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="mining_site">
                            <div class="o_setting_left_pane">
                                <field name="mining_site"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="mining_site"/>
                                <div class="text-muted">
                                    Activate Approval Matrix For Mining Site
                                </div>
                                <div class="content-group mt-3" attrs="{'invisible': [('mining_site', '!=', True)]}">
                                    <field name="mining_site_wa_notif" class="oe_inline"/>
                                    <label for="mining_site_wa_notif" string="Whatsapp Notification"/>
                                    <div class="text-muted">
                                        Will send whatsapp notification when there is a request for approval
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" id="mining_project">
                            <div class="o_setting_left_pane">
                                <field name="mining_project"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="mining_project"/>
                                <div class="text-muted">
                                    Activate Approval Matrix For Mining Pit
                                </div>
                                <div class="content-group mt-3" attrs="{'invisible': [('mining_project', '!=', True)]}">
                                    <field name="mining_project_wa_notif" class="oe_inline"/>
                                    <label for="mining_project_wa_notif" string="Whatsapp Notification"/>
                                    <div class="text-muted">
                                        Will send whatsapp notification when there is a request for approval
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" id="mining_production_plan">
                            <div class="o_setting_left_pane">
                                <field name="mining_production_plan"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="mining_production_plan"/>
                                <div class="text-muted">
                                    Activate Approval Matrix For Mining Production Plan
                                </div>
                                <div class="content-group mt-3" attrs="{'invisible': [('mining_production_plan', '!=', True)]}">
                                    <field name="mining_production_plan_wa_notif" class="oe_inline"/>
                                    <label for="mining_production_plan_wa_notif" string="Whatsapp Notification"/>
                                    <div class="text-muted">
                                        Will send whatsapp notification when there is a request for approval
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" id="mining_production_line">
                            <div class="o_setting_left_pane">
                                <field name="mining_production_line"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="mining_production_line"/>
                                <div class="text-muted">
                                    Activate Approval Matrix For Mining Production Line
                                </div>
                                <div class="content-group mt-3" attrs="{'invisible': [('mining_production_line', '!=', True)]}">
                                    <field name="mining_production_line_wa_notif" class="oe_inline"/>
                                    <label for="mining_production_line_wa_notif" string="Whatsapp Notification"/>
                                    <div class="text-muted">
                                        Will send whatsapp notification when there is a request for approval
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" id="mining_production_act">
                            <div class="o_setting_left_pane">
                                <field name="mining_production_act"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="mining_production_act"/>
                                <div class="text-muted">
                                    Activate Approval Matrix For Mining Production Actualization
                                </div>
                                <div class="content-group mt-3" attrs="{'invisible': [('mining_production_act', '!=', True)]}">
                                    <field name="mining_production_act_wa_notif" class="oe_inline"/>
                                    <label for="mining_production_act_wa_notif" string="Whatsapp Notification"/>
                                    <div class="text-muted">
                                        Will send whatsapp notification when there is a request for approval
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
