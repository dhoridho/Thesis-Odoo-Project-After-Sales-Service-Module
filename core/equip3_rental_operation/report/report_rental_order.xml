<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="rental_template_external_layout">
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <t t-call="equip3_rental_operation.rental_template_header"/>
        <div class="article o_report_layout_standard" t-att-data-oe-id="o and o.id" t-att-data-oe-model="o and o._name">
            <t t-raw="0"/>
        </div>
        <t t-call="general_template.templates_footer"/>
    </template>
    <template id="rental_template_header">
        <div class="header" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                <tbody>
                    <tr>
                        <td>
                            <center>
                                <table border="0" cellpadding="0" cellspacing="0" style="padding:0px 20px 0px 20px; margin:0; background:#fff;" width="100%">
                                    <tr>
                                        <td align="left" colspan="2" t-attf-style="color:#{text_color or '#ffffff'}; padding:0 0px;" valign="top">
                                            <table border="0" cellpadding="0" cellspacing="0" style="line-height: 15px;" width="100%">
                                                <tr>
                                                    <td align="left" style="color:#4D4D4F; padding:0px 15px; border-right: 1px solid #D4D1D1; width:10%;" valign="top">
                                                        <img style="max-height:50px; vertical-align: top; float:none;" t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.logo)"/>
                                                    </td>
                                                    <td style="padding:15px; width:30%" valign="top">
                                                        <p t-attf-style="text-transform:capitalize; color: #{theme_color or '#ffffff'}; font-weight:bold;margin:0; margin-bottom:5px;">Address</p>
                                                        <t t-call="general_template.templates_company_details"/>
                                                    </td>
                                                    <td align="left" style="width:30%; padding:15px;" valign="top">
                                                        <t t-call="general_template.sale_templates_customer_details"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </center>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </template>
    <template id="rental_template_order_lines">
        <table BORDERCOLOR="#{theme_color or '#000000'}" border="1" cellpadding="0" cellspacing="0" class="table table-bordered" style="border:0.5px solid #ccc;  border-collapse: collapse; text-transform:capitalize; padding:15px;border-bottom:1px solid #ccc;" width="100%">
            <thead>
                <tr t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'};">
                    <td align="center" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="10%">Sr.</td>
                    <td align="left" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="25%">Description</td>
                    <td align="center" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="15%">Serial Number</td>
                    <td align="right" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="20%">Unit Price</td>
                    <td align="right" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="10%">Taxes</td>
                    <td align="right" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="20%">Price</td>
                </tr>
            </thead>
            <tbody>
                <t t-as="l" t-foreach="o.rental_line">
                    <t t-if="l_odd">
                        <t t-set="ol_color" t-value="o.company_id.even_party_color"/>
                    </t>
                    <t t-if="l_even">
                        <t t-set="ol_color" t-value="o.company_id.odd_party_color"/>
                    </t>
                    <tr t-att-style="'page-break-inside: avoid !important;background-color: '+ ol_color + '; color: '+ text_color">
                        <td align="left" class="text-center" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                            <span t-esc="l_index+1"/>
                        </td>
                        <td align="left" class="text-left" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                            <span t-field="l.product_id.name"/>
                        </td>
                        <td align="left" class="text-left" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                            <span t-field="l.lot_id.name"/>
                        </td>
                        <td class="text-right" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                            <span t-field="l.price_unit" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                        </td>
                        <td align="center" class="text-center" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                            <span t-esc="', '.join(map(lambda x: x.name, l.tax_id))"/>
                        </td>
                        <td align="right" class="text-right" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                            <span t-field="l.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                        </td>
                    </tr>
                </t>
            </tbody>
        </table>
    </template>
    <template id="rental_template_order_subtotal">
        <table class="pull-right" style="font-weight:bold;width:40%; text-transform:capitalize; " t-att-style="'color: '+ text_color">
            <tr>
                <td class="left" colspan="2" t-att-style="'padding:9px 10px 7px 0px;'">Subtotal</td>
                <td align="right" tyle="padding:9px 0px 7px 10px;">
                    <span t-field="o.amount_untaxed" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                </td>
            </tr>
            <tr>
                <td colspan="3" style="border-bottom:1px solid #959595"/>
            </tr>
            <tr t-att-style="'padding:9px 10px 7px 0px;'">
                <td class="left" colspan="2" t-att-style="'padding:9px 10px 7px 0px;'">
                    <span>Taxes</span>
                </td>
                <td align="right" t-att-style="'padding:9px 0px 7px 10px;'">
                    <span t-field="o.amount_tax" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                </td>
            </tr>
            <tr>
                <td colspan="3" style="border-bottom:1px solid #959595"/>
            </tr>
            <tr>
                <td class="left" colspan="2" t-att-style="'padding:9px 10px 7px 0px;'">Total</td>
                <td align="right" style="padding:9px 0px 7px 10px; text-transform:uppercase; ">
                    <span t-field="o.amount_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                </td>
            </tr>
        </table>
    </template>
    <template id="report_rental_main">
        <t t-call="equip3_rental_operation.rental_template_external_layout">
            <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
            <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color"/>
            <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color"/>
            <t t-set="company_color" t-value="o.company_id and o.company_id.company_color"/>
            <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color"/>
            <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color"/>
            <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color"/>
            <t t-set="text_color" t-value="o.company_id and o.company_id.text_color"/>
            <div class="page" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                <div class="oe_structure"/>
                <t t-call="general_template.templates_watermark"/>
                <div border="0" cellpadding="0" cellspacing="0" style="padding:0px 20px 20px 20px; margin:0; background:#fff; line-height:20px;" width="100%">
                    <div>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <p t-attf-style="padding:20px 0px 0px 0px; height:5px; border-bottom: 1px solid #{theme_color or '#000000'};"/>
                    </div>
                    <div>
                        <table border="0" cellpadding="0" cellspacing="0" t-attf-style="color:#fff; text-transform:capitalize; border: 1px solid #{theme_color or '#000000'};" width="100%">
                            <tr t-attf-style="color: #{theme_text_color or '#000000'}; background-color: #{theme_color or '#000000'};">
                                <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                    <span>Order # </span>
                                    <br/>
                                    <span t-field="o.name"/>
                                </td>
                                <td colspan="2" t-attf-style="background-color:#f2f2f2; height:4px;"/>
                                <td/>
                                <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                    <strong>Date Ordered:</strong>
                                    <br/>
                                    <span t-field="o.date_order"/>
                                </td>
                                <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                    <span class="text-left">Your Reference:</span>
                                    <br/>
                                    <span t-field="o.client_order_ref"/>
                                </td>
                                <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                    <span class="text-left">Salesperson:</span>
                                    <br/>
                                    <p t-field="o.user_id"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div align="left" style="padding:20px 0px 0 0; font-weight:bold; width:100%;" valign="top">
                        <t t-call="equip3_rental_operation.rental_template_order_lines"/>
                    </div>
                    <div style="overflow:auto;">
                        <t t-call="equip3_rental_operation.rental_template_order_subtotal"/>
                    </div>
                    <div t-attf-style="border-bottom:1px solid #{'#959595'}; padding:0px">
                        <t t-call="general_template.template_total_amount_word"/>
                    </div>
                    <div class="oe_structure"/>
                </div>
            </div>
        </t>
    </template>
    <template id="report_rentalorder">
        <t t-call="web.html_container">
            <t t-as="o" t-foreach="docs">
                <t t-call="equip3_rental_operation.report_rental_main" t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template>
</odoo>