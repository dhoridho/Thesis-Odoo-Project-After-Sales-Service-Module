<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="form_rental_extend_view" model="ir.ui.view">
        <field name="name">view.rental.extend.tree</field>
        <field name="model">rental.extend</field>
        <field name="arch" type="xml">
            <form create="false" edit="false" delete="false">
                <group string="Rental Product">
                    <field name="rental_line" nolabel= "1">
                        <tree editable="bottom" create="false" edit="false" delete="false">
                            <field name="product_categ_id" readonly="1"/>
                            <field name="product_id" readonly="1"/>
                            <field name="lot_id" readonly="1"/>
                            <field name="price_unit" readonly="1"/>
                            <field name="tax_id" widget="many2many_tags" readonly="1"/>
                            <field name="price_subtotal" readonly="1"/>
                        </tree>
                    </field>
                </group>
                <group class="oe_subtotal_footer oe_right">
                    <field name="amount_untaxed" readonly="1"/>
                    <field name="amount_tax" readonly="1"/>
                    <field name="amount_total" readonly="1" class="oe_subtotal_footer_separator"/>
                </group>
                <script>
                    $(document).ready(function(){
                    $(".modal-footer").hide();
                    });
                </script>
            </form>
        </field>
    </record>
</odoo>