<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form" model="ir.ui.view">
        <field name="name">view.account.invoice.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/field[@name='move_type']" position="after">
                    <field invisible="1" name="rental_order_id"/>
                    <field invisible="1" name="is_deposit_invoice"/>
                    <field invisible="1" name="is_deposit_return_invoice"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='name']" position="after">
                    <field name="serial_number_id"/>
            </xpath>
        </field>
    </record>

    <record id="action_deposit_invoice" model="ir.actions.act_window">
        <field name="name">Invoices</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('rental_order_id','=',active_id)]</field>
        <field name="context">{'default_rental_order_id':active_id, 'default_move_type':'out_invoice', 'move_type':'out_invoice', 'journal_type': 'sale', 'default_is_deposit_invoice': True}</field>
        <field name="search_view_id" ref="account.view_invoice_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a customer invoice
          </p>
            <p>Create invoices, register payments and keep track of the discussions with your customers.
          </p>
        </field>
    </record>
</odoo>
