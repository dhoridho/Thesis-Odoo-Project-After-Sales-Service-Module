<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="equip3_rental_operation_inherit_view_stock_move_operations" model="ir.ui.view">
        <field name="name">view_stock_move_operations.inherit.view.form</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_stock_move_operations"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_line_ids']" position="before">
                <field name="for_rental_move" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='move_line_ids']" position="attributes">
                <attribute name="attrs">{'readonly': [('for_rental_move', '!=', False)]}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
