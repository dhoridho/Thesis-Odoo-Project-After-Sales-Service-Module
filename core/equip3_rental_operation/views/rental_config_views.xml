<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="browseinfo_rental_management.res_config_settings_view_form_inherit_add_field"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='rental_configuration_setting']/div" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box" id="rental_order_expiry_date_setting">
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Default Expiry Date</span>
                            <div class="text-muted">
                                Set a default expiry date on your <b>Rental Order</b>
                            </div>
                            <div class="content-group">
                                <div class="mt16 row">
                                    <field name="rental_order_expiry_date" class="oe_inline" required="1"/>
                                    <label for="rental_order_expiry_date" string="Days" class="col-1 col-lg-1 o_light_label"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>

            </field>
        </record>

        <record id="rental_inherit_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.implementor.form.inherit.base.setup</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="0"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='equip3_general_setting']" position="inside">
                    <div id="implementor_general_rental">
                        <h2>Rental</h2>
                        <div class="row mt16 o_settings_container" id="implementor_rental_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="implementor_rental">
                                <div class="o_setting_left_pane ">
                                    <field name="rental"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label string="Rental" for="rental"/>
                                </div>
                            </div>
                        </div>
                        <div class="row mt16 o_settings_container"
                             id="implementor_rental_order_approval_matrix_container"
                             attrs="{'invisible': [('rental', '=', False)]}">
                            <div class="col-12 col-lg-6 o_setting_box" 
                                 id="implementor_rental_order_approval_matrix">
                                <div class="o_setting_left_pane ">
                                    <field name="is_rental_order_approval_matrix"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label string="Rental Order Approval Matrix" for="is_rental_order_approval_matrix"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
</odoo>