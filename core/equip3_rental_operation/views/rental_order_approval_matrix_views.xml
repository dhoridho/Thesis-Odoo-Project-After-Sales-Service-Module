<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="rental_order_approval_matrix_form" model="ir.ui.view">
        <field name="name">rental.order.approval.matrix.form</field>
        <field name="model">rental.order.approval.matrix</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="company_id" required="1"/>
                            <field name="branch_id" required="1"/>
                        </group>
                        <group>
                            <field name="created_date" />
                            <field name="created_uid" />
                        </group>
                    </group>
                    <notebook name="approval_matrix_line">
                        <page name="approal_matrix_line" string="Approver Lines">
                            <field name="approval_matrix_line_ids" context="{'approval_matrix_line_ids': approval_matrix_line_ids}">
                                <tree editable="bottom">
                                    <field name="sequence" />
                                    <field name="user_ids" widget="many2many_tags" />
                                    <field name="minimum_approver" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_rental_order_approval_matrix" model="ir.ui.view">
        <field name="name">rental.order.approval.matrix.tree</field>
        <field name="model">rental.order.approval.matrix</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="company_id" />
                <field name="branch_id" />
            </tree>
        </field>
    </record>

    <record id="action_rental_order_approval_matrix" model="ir.actions.act_window">
        <field name="name">Rental Order Approval Matrix</field>
        <field name="res_model">rental.order.approval.matrix</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click here to create new approval matrixes.
              </p>
        </field>
    </record>

    <menuitem 
        id="menu_rental_order_approval_matrix_root" 
        name="Approval Matrix" 
        parent="equip3_rental_masterdata.rental_config_menu_categ" 
        sequence="10" />
    
    <menuitem 
        id="menu_rental_order_approval_matrrix" 
        name="Rental Order Approval Matrix" 
        sequence="10"
        parent="menu_rental_order_approval_matrix_root" 
        action="action_rental_order_approval_matrix" />


</odoo>