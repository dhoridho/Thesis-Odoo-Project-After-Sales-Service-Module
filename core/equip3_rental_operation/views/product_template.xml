<odoo>

    <data>
        <record id="product_template_view_form_inherit" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button" name="action_view_invoice_rental" type="object" icon="o-hm-smart-all-invoices" attrs="{'invisible': [('rent_ok', '=', False),('type','!=','asset')]}" >
                        <div class="o_field_widget o_stat_info" modifiers="{}">
                            <span class="o_stat_value" modifiers="{}">
                                <field name="invoice_rental_count" widget="statinfo" nolabel="1" class="mr4" modifiers="{'readonly':true}" id="invoice_rental_count"/>
                            </span>
                            <span class="o_stat_text">
                                Invoices
                            </span>
                        </div>
                    </button>
        
                    
                </xpath>

                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button" name="action_view_return_of_assets" type="object" icon="fa-list" attrs="{'invisible': [('rent_ok', '=', False),('type','!=','asset')]}" >
                        <div class="o_field_widget o_stat_info" modifiers="{}">
                            <span class="o_stat_value" modifiers="{}">
                                <field name="return_of_assets_count" widget="statinfo" nolabel="1" class="mr4" modifiers="{'readonly':true}" id="return_of_assets_count"/>
                            </span>
                            <span class="o_stat_text">
                                Return Of Assets
                            </span>
                        </div>
                    </button>
        
                    
                </xpath>

            </field>
        </record>

    </data>


</odoo>
