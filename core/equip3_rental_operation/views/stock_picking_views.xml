<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="equip3_rental_operation_inherit_stock_picking_form_view_operation" model="ir.ui.view">
        <field name="name">equip3_rental_operation_inherit_stock_picking_form_view_operation.stock.picking.form.view.inherit.operation</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='picking_type_id']" position="after">
                <field name="rental_id" invisible="1" />
            </xpath>
            <xpath expr="//button[@name='action_serialize']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('is_invisible_button_serialize', '=', True), ('rental_id', '!=', False)]}</attribute>
            </xpath>
            <xpath expr="//header" position="inside">
                <field name="is_replaced" invisible="1" />
                <field name="hide_replace_product_button" invisible="1" />
                <button
                    name="%(browseinfo_rental_management.action_view_rental_product_replace)d"
                    string="Replace Product"
                    attrs="{'invisible': [('hide_replace_product_button', '=', True)]}"
                    type="action"
                    class="oe_highlight" />
            </xpath>
            <xpath expr="//field[@name='rental_return']" position="after">
                <field name="rental_product_delivery_refference" />
            </xpath>
        </field>
    </record>

</odoo>
