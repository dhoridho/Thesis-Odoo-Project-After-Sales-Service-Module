<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="rental_order_feedback" model="ir.ui.view">
            <field name="name">rental.order.feedback.wizard.form</field>
            <field name="model">rental.order.feedback.wizard</field>
            <field name="arch" type="xml">
                <form string="Feedback">
                    <group>
                        <field name="name" required="1" string="Reason" />
                    </group>

                    <footer>
                        <button name="submit" type="object" string="Reject" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="rental_order_feedback_action" model="ir.actions.act_window">
            <field name="name">Reject Reason</field>
            <field name="res_model">rental.order.feedback.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
