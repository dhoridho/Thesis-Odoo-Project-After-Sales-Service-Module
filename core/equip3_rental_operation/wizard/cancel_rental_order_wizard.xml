<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cancel_rental_order_wizard" model="ir.ui.view">
            <field name="name">cancel.rental.order.wizard.form</field>
            <field name="model">cancel.rental.order.wizard</field>
            <field name="arch" type="xml">
                <form string="Replace">
                    <group>
                        <field name="name" required="1" />
                    </group>

                    <footer>
                        <button name="submit" type="object" string="Cancel Rental" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="cancel_rental_order_wizard_action" model="ir.actions.act_window">
            <field name="name">Cancel Rental Order</field>
            <field name="res_model">cancel.rental.order.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
