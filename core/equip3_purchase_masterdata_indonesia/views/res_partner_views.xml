<odoo>
  <data>

    <template id="vendor_sign_up_form_view_inherit" inherit_id="sh_vendor_signup.vendor_sign_up_form_view">
        <xpath expr="//form/div[@class='sub_heading'][2]" position="before">
            <div class='sub_heading' style='margin: 30px 0 10px 0;'>
              <h5><b>Legal Documents</b></h5>
            </div>
            
            <div class='row'>
              <div class='col-lg-6'>
                  <div class="row" style="padding-left: 15px;">
                    <label for="l10n_id_pkp"><b>Status PKP :</b></label>
                    <input type="checkbox" id="l10n_id_pkp" class="form-control" t-attf-name="l10n_id_pkp"/>
                  </div>
              </div>
              <div class='col-lg-6'></div>
              <div class='col-lg-6' id="pkp_true_npwp" style="display: none">
                  <div class="form-group">
                    <label for="vendor_vat"><b>NPWP :</b></label>
                    <input type="text" class="form-control vendor_vat" t-attf-name="vendor_vat" placeholder="00.000.000.0-000.000"/>
                  </div>
                  <div class='col-lg-12 col-sm-12' style='display:flex;align-items: center;margin: 16px 0;'>
                      <div class="form-check-inline">
                          <label class="form-check-label" style='font-weight: 500;'>
                              <input type="checkbox" class="form-check-input" t-attf-name="faktur_pajak_gabungan"/>Faktur Pajak Gabungan
                          </label>
                      </div>
                  </div>
              </div>
              <div class='col-lg-6 pkp_true_npwp_class' style="display: none"></div>
              <div class='col-lg-6'>
                  <div class="form-group">
                    <label for="file_siup"><b>Nomor Induk Berusaha (NIB) :</b></label>
                    <input type="file" class="form-control" t-attf-name="file_siup"/>
                  </div>
              </div>
              <div class='col-lg-6'>
                  <div class="form-group">
                    <label for="salinan_anggaran_dasar"><b>Salinan Anggaran Dasar :</b></label>
                    <input type="file" class="form-control" t-attf-name="salinan_anggaran_dasar"/>
                  </div>
              </div>
              <div class='col-lg-6'>
                  <div class="form-group">
                    <label for="surat_persetujuan_dirjen_ahu"><b>Surat Persetujuan Dirjen AHU :</b></label>
                    <input type="file" class="form-control" t-attf-name="surat_persetujuan_dirjen_ahu"/>
                  </div>
              </div>
              <div class='col-lg-6'>
                  <div class="form-group">
                    <label for="akta_perubahan_pengurus_terakhir"><b>Akta Perubahan Pengurus Terakhir :</b></label>
                    <input type="file" class="form-control" t-attf-name="akta_perubahan_pengurus_terakhir"/>
                  </div>
              </div>
              <div class='col-lg-6'>
                  <div class="form-group">
                    <label for="surat_pernyataan_dan_kuasa"><b>Surat Pernyataan dan Kuasa :</b></label>
                    <input type="file" class="form-control" t-attf-name="surat_pernyataan_dan_kuasa"/>
                  </div>
              </div>
              <div class='col-lg-6 pkp_true_npwp_class' style="display: none">
                  <div class="form-group">
                    <label for="sppkp"><b>Surat Pengukuhan Pengusaha Kena Pajak (SPPKP) :</b></label>
                    <input type="file" class="form-control" t-attf-name="sppkp"/>
                  </div>
              </div>
              <div class='col-lg-6 pkp_false_npwp_class'>
                  <div class="form-group">
                    <label for="surat_keterangan_tidak_kena_pajak"><b>Surat Keterangan Tidak Kena Pajak :</b></label>
                    <input type="file" class="form-control" t-attf-name="surat_keterangan_tidak_kena_pajak"/>
                  </div>
              </div>
            </div>

            <div class='sub_heading' style='margin: 30px 0 10px 0;'>
              <h5><b>Bank Accounts</b></h5>
            </div>
            
            <div class='row'>
              <div class='col-lg-12'>
                <a id="addBankBtn" class="btn btn-success fa fa-plus" name="addBankBtn" style="margin-bottom:10px;font-size: 16px;color: white;" title="Add Bank Accounts" aria-label="Add Bank Accounts" role="button">
                  Add Bank Account
                </a>
                <table class="table">
                  <thead class="thead-dark">
                    <tr>
                      <th>Bank</th>
                      <th colspan="2">Account Number</th>
                    </tr>
                  </thead>
                  <tbody id="tbody_banks">
                  </tbody>
                </table>
              </div>
            </div>
        </xpath>
        <xpath expr="//form/div[@class='row'][10]/div[@class='col-lg-12']/a" position="replace">
            <a id="testbtn" class="btn btn-success fa fa-plus" name="testbtn" style="margin-bottom:10px;font-size: 16px;color: white;" title="Add Contact" aria-label="Add Contact" role="button">
              Add Contacts
            </a>
            <a id="testbtnBill" class="btn btn-success fa fa-plus" name="testbtnBill" style="margin-bottom:10px;font-size: 16px;color: white;" title="Add Vendor Bill Address" aria-label="Add Vendor Bill Address" role="button">
              Add Vendor Bill Address
            </a>
        </xpath>
    </template>


    <record id="view_partner_form_inherit" model="ir.ui.view">
      <field name="name">view.partner.form.inherit</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
        <xpath expr="//notebook/page[@name='contact_addresses']/field[@name='child_ids']/form/sheet/group/group/field[@name='function']" position="after">
          <field name="employee_number" attrs="{'invisible':[('type','!=','contact')]}"/>
        </xpath>
        <xpath expr="//notebook" position="inside">
          <!-- Add your fields here -->
          <page name="legal_documents" string="Legal Documents">
            <group>
              <group>
                <field name="file_name" invisible="1"/>
            <field name="file_siup" filename="file_name"/>
                <field name="salinan_anggaran_dasar"/>
                <field name="surat_persetujuan_dirjen_ahu"/>
              </group>
              <group>
                <field name="akta_perubahan_pengurus_terakhir"/>
                <field name="surat_pernyataan_dan_kuasa"/>
                <field name="surat_keterangan_tidak_kena_pajak" attrs="{'invisible':[('l10n_id_pkp','=',True)]}"/>
                <field name="sppkp" attrs="{'invisible':[('l10n_id_pkp','=',False)]}"/>
              </group>
            </group>
          </page>
        </xpath>
      </field>
    </record>

    <record id="inherit_view_partner_form_inherits" model="ir.ui.view">
      <field name="name">res.partner.inherit.view.form</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="equip3_purchase_masterdata.view_partner_form_inherits"/>
      <field name="arch" type="xml">
        <!-- Add your xpath here -->
        <xpath expr="////notebook/page[@name='contact_addresses']/field[@name='child_ids']/form/sheet/group/group/field[@name='birthdate']" position="after">
          <!-- Add your fields here -->
          <field name="id_number" attrs="{'invisible':[('type','!=','contact')]}"/>
          <field name="civil" attrs="{'invisible':[('type','!=','contact')]}"/>
        </xpath>
      </field>
    </record>
  </data>
</odoo>