         <!-- • Daily Attendance -->
        <record id="ks_school_item_5" model="ks_dashboard_ninja.item">
            <field name="name">Daily Attendance</field>
            <field name="ks_chart_data_count_type">count</field>
            <field name="ks_chart_groupby_type">relational_type</field>
            <field name="ks_model_id" eval="ref('school_attendance.model_daily_attendance')"/>
            <field name="ks_chart_relation_groupby" 
            eval="ref('equip3_school_operation.field_daily_attendance__name')"/>
            <field name="ks_show_data_value">1</field>
            <field name="ks_chart_item_color">cool</field>
            <field name="ks_dashboard_item_type">ks_pie_chart</field>
            <field name="ks_company_id" eval="0"/>
            <field name="ks_data_format">global</field>
        </record>
        <!-- • Today Classes -->
        <record id="ks_school_item_6" model="ks_dashboard_ninja.item">
            <field name="name">Today Classes</field>
            <field name="ks_model_id" eval="ref('equip3_school_operation.model_ems_classes')"/>
            <field name="ks_dashboard_item_type">ks_list_view</field>
            <field name="ks_company_id" eval="1"/>
            <field name="ks_list_view_fields"
                   eval="[(6, 0, [ref('equip3_school_operation.field_ems_classes__name'),
                         ref('equip3_school_operation.field_ems_classes__program_id'),
                         ref('equip3_school_operation.field_ems_classes__study_day'),
                         ref('equip3_school_operation.field_ems_classes__start_time_str'),
                         ref('equip3_school_operation.field_ems_classes__end_time_str')])]"/>
            <field name="ks_date_filter_field" eval="ref('equip3_school_operation.field_ems_classes__class_date')"/>
            <field name="ks_date_filter_selection">l_day</field>
        </record>
        <!-- • Coming Exam -->
        <record id="ks_school_item_7" model="ks_dashboard_ninja.item">
            <field name="name">Coming Exam</field>
            <field name="ks_model_id" eval="ref('equip3_school_operation.model_exam_exam')"/>
            <field name="ks_dashboard_item_type">ks_list_view</field>
            <field name="ks_company_id" eval="1"/>
            <field name="ks_list_view_fields"
                   eval="[(6, 0, [ref('equip3_school_operation.field_exam_exam__name'),
                         ref('equip3_school_operation.field_exam_exam__exam_date'),
                         ref('equip3_school_operation.field_exam_exam__exam_code'),
                         ref('equip3_school_operation.field_exam_exam__type'),
                         ref('equip3_school_operation.field_exam_exam__start_time_str'),
                         ref('equip3_school_operation.field_exam_exam__end_time_str')])]"/>
            <field name="ks_date_filter_field" ref="equip3_school_operation.field_exam_exam__exam_date"/>
            <field name="ks_date_filter_selection">n_futurestarting_tomorrow</field>
            <!-- <field name="ks_compare_period">10</field>
            <field name="ks_year_period">1</field> -->
            <field name="ks_auto_update_type">ks_live_update</field>
            <field name="ks_data_format">global</field>
        </record>

