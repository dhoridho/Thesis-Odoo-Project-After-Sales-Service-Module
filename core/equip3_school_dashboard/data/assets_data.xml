                ]
            </field>
            <field name="ks_item_count">10</field>
        </record>


        <!-- • Students from profile (school.student_student)-->
        <record id="ks_school_item_1" model="ks_dashboard_ninja.item">
            <field name="name">Student</field>
            <field name="ks_model_id" eval="ref('school.model_student_student')"/>
            <field name="ks_dashboard_item_type">ks_tile</field>
            <field name="ks_domain">[('state', '=', 'done'),('student_type', '=', 'new_student')]</field>
            <field name="ks_record_count_type">count</field>
            <field name="ks_date_filter_field" ref="school.field_student_student__create_date"/>
            <field name="ks_date_filter_selection">l_none</field>
            <field name="ks_data_format">global</field>
            <field name="ks_layout">layout6</field>
            <field name="ks_background_color">#ffffff,1</field>
            <field name="ks_font_color">#000000,1</field>
            <field name="ks_icon_select">Custom</field>
            <field name="ks_icon" type="base64" file="equip3_school_dashboard/static/src/img/icon/student.png"/>
            <field name="ks_auto_update_type">ks_live_update</field>
            <field name="ks_update_items_data">15000</field>
            <field name="ks_button_color">#20a6d1,1</field>
            
        </record>
        <!-- • Admission Register from admission register -->
        <record id="ks_school_item_2" model="ks_dashboard_ninja.item">
            <field name="name">Admission Register</field>
            <field name="ks_model_id" eval="ref('school.model_student_student')"/>
            <field name="ks_dashboard_item_type">ks_tile</field>
            <field name="ks_domain">[("state", "!=", "done")]</field>
            <field name="ks_record_count_type">count</field>
            <field name="ks_date_filter_field" ref="school.field_student_student__create_date"/>
            <field name="ks_date_filter_selection">l_none</field>
            <field name="ks_data_format">global</field>
            <field name="ks_layout">layout6</field>
            <field name="ks_background_color">#ffffff,1</field>
            <field name="ks_font_color">#000000,1</field>
            <field name="ks_icon_select">Custom</field>
            <field name="ks_icon" type="base64" file="equip3_school_dashboard/static/src/img/icon/admission_register.png"/>
            <field name="ks_button_color">#f99d00,1</field>
        </record>
