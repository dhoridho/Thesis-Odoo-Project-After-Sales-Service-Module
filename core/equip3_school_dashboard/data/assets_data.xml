                {"item_id":"equip3_school_dashboard.ks_school_item_5", "data": {"x": 0, "y": 2, "w": 6, "h": 4}},
                {"item_id":"equip3_school_dashboard.ks_school_item_6", "data": {"x": 6, "y": 2, "w": 6, "h": 4}},
