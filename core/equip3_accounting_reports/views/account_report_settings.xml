<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_financial_report_form" model="ir.ui.view">
            <field name="name">account.financial.report.form</field>
            <field name="model">account.financial.report</field>
            <field name="inherit_id" ref="accounting_pdf_reports.view_account_financial_report_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/group" position="replace">
                    <group>
                        <group>
                           <field name="code"/>
                        </group>
                        <group/>
                        <group>
                            <field name="name"/>
                            <field name="sequence"/>
                            <field name="sign"/>
                        </group>
                        <group>
                            <field name="parent_id"/>
                            <field name="style_overwrite"/>
                        </group>
                        <group name="form_computation" string="Computation">
                            <field name="formulas"/>
                            <field name="domain" attrs="{'readonly': [('type','not in',['accounts','account_type', 'account_report'])]}"/>
                            <field name="type"/>
                        </group>
                    </group>
                </xpath>

                <xpath expr="//form/notebook" position="attributes">
                    <attribute name="attrs"></attribute>
                </xpath>

                <xpath expr="//form/notebook/page/group/field[@name='display_detail']" position="attributes">
                    <attribute name="attrs"></attribute>
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//form/notebook/page" position="attributes">
                    <attribute name="attrs">{'invisible': [('type','not in',['accounts','account_type', 'account_report'])]}</attribute>
                </xpath>

                <xpath expr="//form/notebook" position="inside">
                    <page id="children_line" string="Children line">
                        <field name="children_ids">
                            <tree>
                                <field name="name"/>
                                <field name="code"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>

