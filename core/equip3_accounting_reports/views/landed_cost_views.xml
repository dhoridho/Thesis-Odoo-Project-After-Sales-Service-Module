<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_landed_cost_view_pivot" model="ir.actions.act_window">   
        <field name="name">View Pivot</field>      
        <field name="res_model">stock.landed.cost</field>     
        <field name="view_mode">pivot</field>      
        <field name="domain">[('status','=','approve')]</field>   
            <field name="help" type="html">     
            <p class="oe_view_nocontent_create">         

            </p>      
            </field>  
    </record>
    <!-- stock.landed.cost pivot view -->
    <record id="landed_cost_view_pivot" model="ir.ui.view">
        <field name="name">stock.landed.cost.view.pivot</field>
        <field name="model">stock.landed.cost</field>
        <field name="arch" type="xml">
            <pivot string="Landed Cost Pivot" display_quantity="true">
                <!-- Add your fields here -->
                <field name="new_name" invisible="1"/>
                <field name="name" type="row"/>
                <field name="state" type="col"/>
                <field name="account_journal_id" type="measure"/>
            </pivot>
        </field>
    </record>

    
    <record id="action_landed_cost_view_graph" model="ir.actions.act_window">   
        <field name="name">View Graph</field>      
        <field name="res_model">stock.landed.cost</field>     
        <field name="view_mode">graph</field>      
        <field name="domain">[('status','=','approve')]</field>   
            <field name="help" type="html">     
            <p class="oe_view_nocontent_create">         

            </p>      
            </field>  
    </record>
    <!-- model.name graph view -->
    <record id="landed_cost_view_graph" model="ir.ui.view">
        <field name="name">stock.landed.cost.view.graph</field>
        <field name="model">stock.landed.cost</field>
        <field name="arch" type="xml">
            <graph orientation="vertical" string="Landed Cost Graph" type="bar">
                <!-- Add your fields here -->
                <field name="new_name" invisible="1"/>
                <field name="name" type="row"/>
                <field name="state" type="col"/>
                <field name="account_journal_id" type="measure"/>                
            </graph>
        </field>
    </record>

    <act_window  id="action_stock_landed_cost"  
        name="Landed Costs"  
        res_model="stock.landed.cost"
        view_mode="tree,form,graph,pivot,kanban"/>  
    <menuitem  id="menu_landed_cost"  
        name="Landed Costs"  
        action="action_stock_landed_cost" 
        parent="dynamic_accounts_report.dynamic_report_accounting"
        groups="base.group_multi_company,stock.group_stock_manager"
        sequence="16" />
</odoo>
