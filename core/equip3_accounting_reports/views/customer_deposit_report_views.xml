<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="customer_deposit_report_pivot">
        <field name="name">customer.deposit.report.pivot</field>
        <field name="model">customer.deposit.report</field>
        <field name="arch" type="xml">
            <pivot string="Assets Analysis" disable_linking="True">
                <field name="name" type="row"/>
                <field name="amount" type="measure"/>
                <field name="used_amount" type="measure"/>
                <field name="remaining_amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <record model="ir.ui.view" id="customer_deposit_report_graph">
        <field name="name">customer.deposit.report.graph</field>
        <field name="model">customer.deposit.report</field>
        <field name="arch" type="xml">
            <graph string="Assets Analysis">
                <field name="name" type="row"/>
                <field name="amount" type="measure"/>
                <field name="used_amount" type="measure"/>
                <field name="remaining_amount" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="action_customer_deposit_report" model="ir.actions.act_window">
        <field name="name">Customer Deposit Report</field>
        <field name="res_model">customer.deposit.report</field>
        <field name="view_mode">pivot,graph</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
              Register a Customer Deposit
            </p>
        </field>
    </record>
    
    <menuitem action="action_customer_deposit_report" id="menu_customer_deposit_report"
     parent="account.account_reports_management_menu" sequence="2" name="Customer Deposit Report"/>

</odoo>
