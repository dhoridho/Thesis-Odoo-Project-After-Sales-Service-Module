<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="external_layout_payment_receipt">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>

        <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
            <div class="row">
                <div class="col-3 mb4">
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 45px;" alt="Logo"/>
                </div>
                <div class="col-9 text-right" style="margin-top:22px;" t-field="company.report_header" name="moto"/>
            </div>
            <div t-if="company.logo or company.report_header" class="row zero_min_height">
                <div class="col-12">
                    <div style="border-bottom: 1px solid black;"/>
                </div>
            </div>
            <div class="row" style="margin-top: 24px;">
                <div class="col-6" name="company_address">
                    <div t-field="company.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: true}"/>
                </div>
            </div>
        </div>

        <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <div class="pt-5">
                <!-- This div ensures that the address is not cropped by the header. -->
                <t t-call="web.address_layout"/>
            </div>
            <t t-raw="0"/>
        </div>

        <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
            <div class="text-center" style="border-top: 1px solid black;">
                <ul class="list-inline mb4">
                    <!-- using the list-inline-item class from bootstrap causes weird behaviours in pdf report
                         adding d-inline class fixes the problem-->
                    <li t-if="company.phone" class="list-inline-item d-inline"><span class="o_force_ltr" t-field="company.phone"/></li>
                    <li t-if="company.email" class="list-inline-item d-inline"><span t-field="company.email"/></li>
                    <li t-if="company.website" class="list-inline-item d-inline"><span t-field="company.website"/></li>
                    <li t-if="company.vat" class="list-inline-item d-inline"><t t-esc="company.country_id.vat_label or 'Tax ID'"/>: <span t-field="company.vat"/></li>
                </ul>

                <div name="financial_infos">
                    <span t-field="company.report_footer"/>
                </div>

                <div t-if="report_type == 'pdf'" class="text-muted">
                    Page: <span class="page"/> / <span class="topage"/>
                </div>
            </div>
        </div>
    </template>

    <template id="report_payment_receipt_document_template">
        <t t-call="equip3_accounting_reports.external_layout_payment_receipt">
            <t t-set="o" t-value="o.with_context(lang=lang)"/>
            <div class="page">
                <div style="font-weight: bold; font-size: 18px;">Payment Receipt: <a style="text-decoration: underline;" href="#"><span t-field="o.name"/></a></div>
                <div class="row" style="margin-top: 24px;">
                    <div class="col" style="width: 22%;">
                        <div style="font-weight: bold; font-size: 18px;">Payment Date</div>
                    </div>
                    <div class="col" style="width: 28%">
                        <div style="width: 5%; display: inline-block; font-size: 18px;">:</div><div style="width: 95%; display: inline-block; font-size: 18px;"><span style="border-bottom: 1px solid black; width: 100%; display: block; line-height: 97%;" t-field="o.date"/></div>
                    </div>
                    <div class="col" style="width: 22%;">
                        <div style="font-weight: bold; font-size: 18px;">Payment Method</div>
                    </div>
                    <div class="col" style="width: 28%">
                        <div style="width: 5%; display: inline-block; font-size: 18px;">:</div><div style="width: 95%; display: inline-block; font-size: 18px;"><span style="border-bottom: 1px solid black; width: 100%; display: block; line-height: 97%;" t-field="o.payment_method_id.name"/></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col" style="width: 22%;">
                        <t t-if="o.partner_type == 'customer'">
                            <div style="font-weight: bold; font-size: 18px;">Customer </div>
                        </t>
                        <t t-if="o.partner_type == 'supplier'">
                            <div style="font-weight: bold; font-size: 18px;">Vendor</div>
                        </t>
                    </div>
                    <div class="col" style="width: 28%">
                        <div style="width: 5%; display: inline-block; font-size: 18px;">:</div><div style="width: 95%; display: inline-block; font-size: 18px;"><span style="border-bottom: 1px solid black; width: 100%; display: block; line-height: 97%;" t-field="o.partner_id"/></div>
                    </div>
                    <div class="col" style="width: 22%;">
                        <div style="font-weight: bold; font-size: 18px;">Memo</div>
                    </div>
                    <div class="col" style="width: 28%">
                        <div style="width: 5%; display: inline-block; font-size: 18px;">:</div><div style="width: 95%; display: inline-block; font-size: 18px;"><span style="border-bottom: 1px solid black; width: 100%; display: block; line-height: 97%;" t-field="o.ref"/></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col" style="width: 22%;">
                        <div style="font-weight: bold; font-size: 18px;">Payment Amount</div>
                    </div>
                    <div class="col" style="width: 28%">
                        <div style="width: 5%; display: inline-block; font-size: 18px;">:</div><div style="width: 95%; display: inline-block; font-size: 18px;"><span style="border-bottom: 1px solid black; width: 100%; display: block; line-height: 97%;" t-field="o.amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></div>
                    </div>
                </div>
                <table class="w-100" style="border: 1px solid black; border-collapse: collapse; border-spacing: 1px; margin-top: 24px;">
                    <thead>
                        <tr style="font-size: 18px; margin: 0; padding: 0; border: 1px solid black; font-weight: bold;">
                            <td style="border: 1px solid black; color: black; padding: 3px;"><span>Invoice Date</span></td>
                            <td style="border: 1px solid black; color: black; padding: 3px;"><span>Invoice No.</span></td>
                            <td style="border: 1px solid black; color: black; padding: 3px;"><span>Reference</span></td>
                            <td style="border: 1px solid black; color: black; padding: 3px;"><span>Amount</span></td>
                            <td style="border: 1px solid black; color: black; padding: 3px;"><span>Amount Paid</span></td>
                            <td style="border: 1px solid black; color: black; padding: 3px;"><span>Balance</span></td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="o.move_id._get_reconciled_invoices_partials()" t-as="rec" style="font-size: 18px; height: 100px;">
                            <t t-set="amount" t-value="rec[1]"/>
                            <t t-set="inv" t-value="rec[2].move_id"/>
                            <t t-if="inv.move_type != 'entry'">
                                <td style="border: 1px solid black; padding: 3px;"><span t-field="inv.invoice_date"/></td>
                                <td style="border: 1px solid black; padding: 3px;"><span t-field="inv.name"/></td>
                                <td style="border: 1px solid black; padding: 3px;"><span t-field="inv.ref"/></td>
                                <td style="border: 1px solid black; padding: 3px;" class="text-right"><span t-field="inv.amount_total"/></td>
                                <td style="border: 1px solid black; padding: 3px;" class="text-right"><span t-esc="amount" t-options="{'widget': 'monetary', 'display_currency': inv.currency_id}"/></td>
                                <td style="border: 1px solid black; padding: 3px;" class="text-right"><span t-field="inv.amount_residual"/></td>
                            </t>
                        </tr>
                    </tbody>
                </table>
                <!-- Footer for e-signature -->
                <div style="margin-top: 32px;"></div>
                <p><strong>Authorized Signature:</strong></p>
                <t t-if="o.siganture_history_ids">
                    <table style="border-collapse: collapse;">
                        <t t-set="i" t-value="0" />
                        <t t-set="signature_per_3" t-value="len(o.siganture_history_ids) / 3" />
                        <t t-set="sisa_signature" t-value="len(o.siganture_history_ids) % 3" />
                        <t t-if="sisa_signature == 1">
                          <t t-set="len_sign" t-value="round(signature_per_3)+1" />
                        </t>
                        <t t-else="">
                          <t t-set="len_sign" t-value="round(signature_per_3)" />
                        </t>
                        <t t-foreach="range(0, len_sign)" t-as="j">
                          <t t-if="j == len_sign - 1">
                            <tr>
                              <t t-foreach="o.siganture_history_ids[3*j:]" t-as="signature">
                                  <td class="text-center" t-attf-style="border: 1px solid black; #{'width: 300px !important;' if len_sign == 1 else ''}">
                                    <p><span t-field="signature.approver_id.name"/></p>
                                    <p><span t-field="signature.timestamp"/></p>
                                    <p><span t-field="signature.signature" t-options='{"widget": "image"}' style="width: 50px; height: 50px;"/></p>
                                  </td>
                              </t>
                            </tr>
                          </t>
                          <t t-else="">
                            <tr>
                            <t t-foreach="o.siganture_history_ids[3*j:3*(j+1)]" t-as="signature">
                              <td class="text-center" t-attf-style="border: 1px solid black; #{'width: 300px !important;' if len_sign == 1 else ''}">
                                <p><span t-field="signature.approver_id.name"/></p>
                                <p><span t-field="signature.timestamp"/></p>
                                <p><span t-field="signature.signature" t-options='{"widget": "image"}' style="width: 50px; height: 50px;"/></p>
                              </td>
                            </t>
                            </tr>
                            <tr style="height: 24px;"></tr>
                          </t>
                        </t>
                    </table>
                </t>
                <t t-else="">
                    <p>No signatures available.</p>
                </t>

            </div>
        </t>
    </template>

    <template id="report_payment_receipt_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.partner_id.lang or o.company_id.partner_id.lang"/>
                <t t-call="equip3_accounting_reports.report_payment_receipt_document_template" t-lang="lang"/>
            </t>
        </t>
    </template>
</odoo>
