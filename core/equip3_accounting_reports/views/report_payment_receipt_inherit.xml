            <div style="margin-top: 250px;">
                <p><strong>Authorized Signature:</strong></p>
                <t t-if="o.siganture_history_ids">
                    <table border="1px" style="width: 100%;">
                        <t t-foreach="o.siganture_history_ids" t-as="signature">
                            <tr>
                                <td style="border: 1px solid black; width: 40%; vertical-align: bottom; height: 60px;">
                                    <span t-field="signature.approver_id.name"/>
                                </td>
                                <td rowspan="2" style="height: auto; border: 1px solid black; padding-left: 10px; text-align: center;">
                                    <div style="height: 120px; overflow: hidden;">
                                        <span t-field="signature.signature" t-options='{"widget": "image"}' style="width: 100%; height: 100%; object-fit: fill;"/>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td style="border: 1px solid black;width: 40%; vertical-align: top; height: 60px;">
                                    <span t-field="signature.timestamp"/>
                                </td>
                            </tr>
                        </t>
                    </table>
                </t>
                <t t-else="">
                    <p>No signatures available.</p>
                </t>
            </div>
        </xpath>
