<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form_inherit_accounting_reports" model="ir.ui.view">
        <field name="name">view.move.form.inherit.accounting.reports</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/notebook/page[@name='other_info']/group/group[@name='accounting_info_group']" position="inside">
                <field name="exchange_id" invisible="1" />
                <field name="exchange_stage" />
            </xpath>
        </field>
    </record>

    <record id="view_move_form_inherit_masterdata" model="ir.ui.view">
        <field name="name">view.move.form.inherit.masterdata</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="equip3_accounting_masterdata.view_move_form_inherit_accounting_masterdata"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='journal_div']" position="after">
                <field name="exchange_status" attrs="{'invisible': [('move_type','not in',['out_invoice','in_invoice'])]}"/>
            </xpath>
        </field>
    </record>

    <record id="view_move_form_inherit_accounting_reports2" model="ir.ui.view">
        <field name="name">view.move.form.inherit.accounting.reports2</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="equip3_accounting_operation.view_move_form_inherit_accounting_operation"/>
        <field name="arch" type="xml">
           <xpath expr="//field[@name='visible_received_date']" position="replace">
                <field name="visible_received_date" invisible="1" />
                <field name="exchange_date" />
            </xpath>
        </field>
    </record>
</odoo>