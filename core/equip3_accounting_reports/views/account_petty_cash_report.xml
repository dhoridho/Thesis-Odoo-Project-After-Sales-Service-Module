<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="account_petty_cash_report_pivot">
        <field name="name">account.petty.cash.report.pivot</field>
        <field name="model">account.petty.cash.report</field>
        <field name="arch" type="xml">
            <pivot string="Assets Analysis" disable_linking="True">
                <field name="name" type="row"/>
                <field name="amount" type="measure"/>
                <field name="balance" type="measure"/>
                <field name="virtual_balance" type="measure"/>
                <field name="expense_amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <record model="ir.ui.view" id="account_petty_cash_report_graph">
        <field name="name">account.petty.cash.report.graph</field>
        <field name="model">account.petty.cash.report</field>
        <field name="arch" type="xml">
            <graph string="Assets Analysis">
                <field name="name" type="row"/>
                <field name="amount" type="measure"/>
                <field name="balance" type="measure"/>
                <field name="virtual_balance" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="action_account_petty_cash_report" model="ir.actions.act_window">
        <field name="name">Petty Cash Report</field>
        <field name="res_model">account.petty.cash.report</field>
        <field name="view_mode">pivot,graph</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
              Register a Petty Cash
            </p>
        </field>
    </record>
    
    <menuitem id="menu_pettycash_report" name="Reporting" sequence="10" parent="equip3_accounting_pettycash.menu_petty_cash"/>
    
    <menuitem action="action_account_petty_cash_report" id="menu_petty_petty_cash_report" sequence="1" name="Petty Cash Report" parent="menu_pettycash_report"/>
    
    <record id="action_dynamic_enterprise_pettycash" model="ir.actions.client">
        <field name="name">Enterprise Petty Cash Analysis Report</field>
        <field name="tag">ent_p</field>
    </record>

    <menuitem id="menu_enterprise_petty_cash_analysis_report"  action="action_dynamic_enterprise_pettycash"
              name="Enterprise Petty Cash Analysis" sequence="2" parent="menu_pettycash_report"/>

    <record id="menu_petty_petty_cash_report" model="ir.ui.menu">
        <field name="groups_id" eval="[(5, 0, 0), (6,0, [ref('equip3_accounting_accessright_setting.group_voucher_manager_petty')])]" />
    </record>

    <record id="menu_pettycash_report" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-parent-accounting-reporting</field> 
    </record>

    <!-- <menuitem action="action_account_petty_cash_report" id="menu_action_petty_cash_report"
     parent="account.account_reports_management_menu" sequence="3" name="Petty Cash Report"/> -->

</odoo>
