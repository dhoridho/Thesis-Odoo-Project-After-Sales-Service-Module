<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_debt_collection_report" model="ir.actions.client">
        <field name="name">Debt Collection Report</field>
        <field name="tag">d_c_r</field>
    </record>

    <menuitem action="action_debt_collection_report" id="menu_debt_collection_report"
        parent="account.account_reports_management_menu" sequence="21" name="Debt Collection Report"/>

    <record id="view_pivot_debt_collection_analysis_pivot" model="ir.ui.view">
        <field name="name">view.pivot.debt.collection.line.analysis.pivot</field>
        <field name="model">account.debt.collection.line</field>
        <field name="arch" type="xml">
            <pivot string="Pivot Debt Collection Analysis" disable_linking="True">
                <field name="partner_id" type="row"/>
                <field name="deadline_date" type="col"/>
                <field name="amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="view_pivot_debt_collection_analysis_tree" model="ir.ui.view">
        <field name="name">view.pivot.debt.collection.analysis.tree</field>
        <field name="model">account.debt.collection.line</field>
        <field name="arch" type="xml">
            <tree string="Pivot Debt Collection Analysis">
                <field name="invoice_date"/>
                <field name="partner_id"/>
                <field name="invoice_id"/>
                <field name="user_id"/>
                <field name="amount_invoice"/>
                <field name="amount_residual"/>
                <field name="amount"/>
                <field name="journal_id"/>
                <field name="date"/>
                <field name="invoice_due_date"/>
                <field name="total_due_date" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="action_pivot_debt_collection_analysis" model="ir.actions.act_window">
        <field name="name">Pivot Debt Collection Analysis</field>
        <field name="res_model">account.debt.collection.line</field>
        <field name="view_mode">pivot</field>
    </record>

    <menuitem id="menu_pivot_debt_collection_analysis" action="action_pivot_debt_collection_analysis" name="Pivot Debt Collection Analysis" parent="account.account_reports_management_menu" sequence="22"/>

</odoo>
