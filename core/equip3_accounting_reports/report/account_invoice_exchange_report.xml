<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="templates_customer_details">
            <p t-attf-style="text-transform:capitalize; color: #{theme_color or '#ffffff'}; font-weight:bold; margin:0; margin-bottom:5px; padding:10px 0px 0px 0px;">
                <strong>Address:</strong>
            </p>
            <t t-if="o.partner_id">
                <span t-attf-style="text-transform:capitalize; padding:0px; margin:0; color: #{customer_color or '#ffffff'};">
                    <t t-if="o.company_id and o.company_id.is_customer_bold">
                        <strong>
                            <span t-field="o.partner_id"/>
                        </strong>
                    </t>
                    <t t-if="not o.company_id.is_customer_bold">
                        <span t-field="o.partner_id"/>
                    </t>
                </span>
                <p t-attf-style="color: #{customer_address_color or '#ffffff'};">
                    <span t-esc="o._get_street(o.partner_id)"/>
                    <br/>
                    <span t-esc="o._get_address_details(o.partner_id)"/>
                    <br/>
                    <t t-if="o.partner_id.mobile">
                        <strong>Mobile: </strong>
                        <span t-field="o.partner_id.mobile"/>
                        <br/>
                    </t>
                    <t t-if="o.partner_id.email">
                        <strong>Email: </strong>
                        <span t-field="o.partner_id.email"/>
                        <br/>
                    </t>
                    <t t-if="o.partner_id.vat">
                        <strong>Vat: </strong>
                        <span t-field="o.partner_id.vat"/>
                    </t>
                </p>
            </t>
        </template>

        <template id="exclusive_external_layout">
            <!-- Multicompany -->
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"/>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"/>
            </t>
            <t t-call="equip3_accounting_reports.exclusive_header"/>
            <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
                <t t-raw="0"/>
            </div>
            <t t-call="general_template.template_footer"/>
        </template>

        <template id="exclusive_header">
            <div class="header" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                    <tbody>
                        <tr>
                            <td>
                                <center>
                                    <table border="0" cellpadding="0" cellspacing="0" style="padding:0px 20px 0px 20px; margin:0; background:#fff; line-height:20px;" width="100%">
                                        <tr>
                                            <td align="left" colspan="2" t-attf-style="color:#{text_color or '#ffffff'}; padding:0 0px;" valign="top">
                                                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                    <tr>
                                                        <td align="left" style="color:#4D4D4F; padding: 0px 15px; border-right: 1px solid #D4D1D1;" valign="top">
                                                            <img style="max-height: 50px; margin-top: 10%;" t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.logo)" t-if="o.company_id.logo"/>
                                                        </td>
                                                        <td style="padding:10px 0 10px 10px; width:50%; line-height:18px;" valign="top">
                                                            <p t-attf-style="text-transform:capitalize; color:#{theme_color or '#ffffff'}; font-weight:bold; margin:0; margin-bottom:5px;">Address</p>
                                                            <t t-call="general_template.templates_company_details"/>
                                                        </td>
                                                        <td align="left" style="padding:0px 0px 0px 15px; width:50%; line-height:18px;" valign="top">
                                                            <t t-call="equip3_accounting_reports.templates_customer_details"/>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="3" style="height:5px;"/>
                                        </tr>
                                    </table>
                                </center>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </template>

        <template id="account_invoice_exchange_report_document">
            <t t-call="equip3_accounting_reports.exclusive_external_layout">
                <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
                <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color"/>
                <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color"/>
                <t t-set="company_color" t-value="o.company_id and o.company_id.company_color"/>
                <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color"/>
                <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color"/>
                <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color"/>
                <t t-set="text_color" t-value="o.company_id and o.company_id.text_color"/>
                <div class="page" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                    <div class="oe_structure"/>
                    <t t-call="general_template.template_watermark"/>
                    <div>
                        <div style="padding:100px 20px 20px 20px; margin:0; background:#fff;">
                            <div>
                                <table>
                                    <tr>
                                        <td><strong>Date</strong></td>
                                        <td style="padding:0 2px 0 10px;">:</td>
                                        <td style="padding:2px;"><span t-field="o.date"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Vendors</strong></td>
                                        <td style="padding:0 2px 0 10px;">:</td>
                                        <td style="padding:2px; width:300px;">
                                            <t t-if="o.exchange_type == 'invoice'">
                                                <span t-field="o.company_id"/>
                                            </t>
                                            <t t-else="">
                                                <span t-field="o.partner_id"/>
                                            </t>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>&#160;</td>
                                        <td style="padding:0 2px 0 10px;">&#160;</td>
                                        <td style="padding:2px;">&#160;</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Invoice Recipient</strong></td>
                                        <td style="padding:0 2px 0 10px;">:</td>
                                        <td style="padding:2px;">
                                            <t t-if="o.exchange_type == 'invoice'">
                                                <span t-field="o.partner_id"/>
                                            </t>
                                            <t t-else="">
                                                <span t-field="o.company_id"/>
                                            </t>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <br /> <br />
                            <div>
                                <table BORDERCOLOR="ff0000" border="1" cellpadding="0" cellspacing="0" style="page-break-inside: avoid !important;border:0.5px solid #ccc;  border-collapse: collapse; text-transform:capitalize; border-bottom:1px solid #ccc;" width="100%">
                                    <thead>
                                        <tr t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'};">
                                            <td align="center" t-attf-style="padding:5px 10px; font-weight:bold; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important;">
                                                <t t-if="o.exchange_type == 'invoice'">
                                                    <span>Invoice Number</span>
                                                </t>
                                                <t t-else="">
                                                    <span>Bill Number</span>
                                                </t>
                                            </td>
                                            <td align="center" t-attf-style="padding:5px 10px; font-weight:bold; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important;">
                                                <t t-if="o.exchange_type == 'invoice'">
                                                    <span>Invoice Date</span>
                                                </t>
                                                <t t-else="">
                                                    <span>Bill Date</span>
                                                </t>
                                            </td>
                                            <td align="center" t-attf-style="padding:5px 10px; font-weight:bold; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important;">Total Amount</td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <t t-as="move" t-foreach="o.move_ids">
                                                <t t-if="p_odd">
                                                    <t t-set="pl_color" t-value="o.company_id.even_party_color"/>
                                                </t>
                                                <t t-if="p_even">
                                                    <t t-set="pl_color" t-value="o.company_id.odd_party_color"/>
                                                </t>
                                                <tr t-att-style="'page-break-inside: avoid !important; color: %s; background-color: %s ' %(text_color, pl_color) " t-if="move">
                                                    <td class="text-center" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important; '" width="65px">
                                                        <span t-field="move.name"/>
                                                    </td>
                                                    <td class="text-center" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important; '" width="65px">
                                                        <span t-field="move.invoice_date"/>
                                                    </td>
                                                    <td class="text-center" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important; '" width="65px">
                                                        <span t-field="move.amount_total"/>
                                                    </td>
                                                </tr>
                                            </t>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <br /> <br />
                            <div class="row" style="margin-left:100px; margin-top: 50px;">
                                <div>
                                    <strong>Handed over by &#160;</strong>

                                    <div style="text-align:center;margin-top:80px;">
                                        <t t-if="o.exchange_type == 'invoice'">
                                            <span t-field="o.company_id"/>
                                        </t>
                                        <t t-else="">
                                            <span t-field="o.partner_id"/>
                                        </t>
                                    </div>
                                </div>
                                <div style="margin-left: 150px;">
                                    <strong>Received by</strong>

                                    <div style="text-align:center;margin-top:100px;">
                                        <t t-if="o.exchange_type == 'invoice'">
                                            <span t-field="o.partner_id"/>
                                        </t>
                                        <t t-else="">
                                            <span t-field="o.company_id"/>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="account_invoice_exchange_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.partner_id.lang"/>
                    <t t-call="equip3_accounting_reports.account_invoice_exchange_report_document" t-lang="lang"/>
                </t>
            </t>
        </template>

        <record id="account_invoice_exchange_action_report" model="ir.actions.report">
            <field name="name">Invoices Exchange</field>
            <field name="model">account.invoice.exchange</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">equip3_accounting_reports.account_invoice_exchange_report_template</field>
            <field name="report_file">equip3_accounting_reports.account_invoice_exchange_report_template</field>
            <field name="print_report_name">(object.name)</field>
            <field name="binding_model_id" ref="model_account_invoice_exchange"/>
            <field name="binding_type">report</field>
        </record>

    </data>
</odoo>
