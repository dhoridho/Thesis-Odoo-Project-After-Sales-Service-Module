<odoo>
    <template id="equip3_accounting_reports.debt_collection">
        <t t-call="web.html_container">
            <t t-set="data_report_margin_top" t-value="12"/>
            <t t-set="data_report_header_spacing" t-value="9"/>
            <t t-set="data_report_dpi" t-value="110"/>
            <t t-call="web.internal_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <h3 style="text-align:centre;left:50%;">
                        <span t-esc="Filters.get('company_name')"/>: <t t-esc="title"/>
                    </h3>

                    <span t-if="Filters.get('date_from')">
                        <strong> From:</strong>
                        <t t-esc="Filters['date_from']"/>
                    </span>

                    <span t-if="Filters.get('date_to')">
                        <strong>To:</strong>
                        <t t-esc="Filters['date_to']"/>
                    </span>

                    <div>
                        <div style="width:100%;">
                            <div style="text-align:centre;" class="row">
                                <div class="col-2">
                                    <strong>Person in Charge:</strong>
                                    <t t-foreach="Filters['users']" t-as="ps">
                                        <li>
                                            <t t-esc="ps"/>
                                        </li>
                                    </t>
                                </div>

                                <div class="col-2">
                                    <strong>Payment Method:</strong>
                                    <t t-foreach="Filters['journals']" t-as="ps">
                                        <li>
                                            <t t-esc="ps"/>
                                        </li>
                                    </t>
                                </div>

                                <div class="col-2">
                                    <strong>Customer:</strong>
                                    <t t-foreach="Filters['partners']" t-as="ps">
                                        <li>
                                            <t t-esc="ps"/>
                                        </li>
                                    </t>
                                </div>

                                <div class="col-3">
                                    <strong>Status:</strong>
                                    <li>
                                        <t t-esc="Filters['state']"/>
                                    </li>
                                </div>
                            </div>
                        </div>

                        <br></br>

                        <table class="table table-sm table-reports">
                            <thead>
                                <tr class="text-right">
                                    <th>Date</th>
                                    <th>Invoice</th>
                                    <th>Person in Charge</th>
                                    <th class="text-right">Invoice Amount</th>
                                    <th class="text-right">Debt Amount Due</th>
                                    <th class="text-right">Total Collection Amount</th>
                                    <th>Payment Method</th>
                                    <th>Collection Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="debt_data" t-as="debt">
                                    <tr style="font-weight: bold;">
                                        <td colspan="2">
                                            <span style="color: white;" t-esc="'..'"/>
                                            <span t-esc="debt['name']"/>
                                        </td>
                                        <td>
                                            <span t-esc="debt['person_in_charge']"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="debt['invoice_amount']" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="debt['debt_amount_due']" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="debt['total_collection_amount']" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                        </td>
                                    </tr>
                                    <tr t-foreach="debt['debt_lines']" t-as="line">
                                        <td>
                                            <span t-esc="line['date']"/>
                                        </td>
                                        <td>
                                            <span t-esc="line['invoice_name']"/>
                                        </td>
                                        <td>
                                            <span t-esc="line['person_in_charge']"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="line['invoice_amount']" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="line['debt_amount_due']" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="line['total_collection_amount']" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                        </td>
                                        <td>
                                            <span t-esc="line['payment_method']"/>
                                        </td>
                                        <td>
                                            <span t-esc="line['collection_date']"/>
                                        </td>
                                        <td>
                                            <span t-esc="line['state']"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody> 
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <record id="action_print_debt_collection" model="ir.actions.report">
        <field name="name">Debt Collection Report</field>
        <field name="model">debt.collection.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">equip3_accounting_reports.debt_collection</field>
        <field name="report_file">equip3_accounting_reports.debt_collection</field>
    </record>
</odoo>