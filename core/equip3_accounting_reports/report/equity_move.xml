<odoo>
    <template id="equip3_accounting_reports.equity_move">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <h3 style="text-align:centre;left:50%;"><span t-esc="Filters.get('company_name')"/>: Equity Movement Report
                    </h3>

                    <span t-if="Filters.get('date_from')">
                    <strong> From:</strong>
                    <t t-esc="Filters['date_from']"/>
                    </span>

                    <span t-if="Filters.get('date_to')">
                    <strong>To:</strong>
                    <t t-esc="Filters['date_to']"/>
                    </span>

                    <div>
                        <div style="text-align:centre;left:50%;" class="row">
                            <div class="col-3">
                                <strong>Target move:</strong>
                                    <li>
                                        <t t-esc="Filters['target_move']"/>
                                    </li>
                            </div>
                        </div>

                        <br></br>
                        <table class="table table-sm table-reports">
                            <thead>
                                <tr>
                                    <th colspan="6">Name</th>
                                    <th class="text-right">Debit</th>
                                    <th class="text-right">Credit</th>
                                    <th class="text-right">Balance</th>
                                </tr>
                            </thead>
                            <t t-foreach="account_equity_filtered" t-as="line">
                                    <tr>
                                        <td colspan="6" style="text-align:left;">
                                            <span>Authorized capital</span>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="line['debit']"
                                                  t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="line['credit']"
                                                  t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="line['balance']"
                                                  t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                    </tr>
                            </t>
                            <t t-foreach="account_equity" t-as="line">
                                    <tr>
                                        <td colspan="6" style="text-align:left;">
                                            <span>Additional paid in capital</span>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="line['debit']"
                                                  t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="line['credit']"
                                                  t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="line['balance']"
                                                  t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                    </tr>
                            </t>
                            <t t-foreach="account_retained_earnings" t-as="line">
                                    <tr>
                                        <td colspan="6" style="text-align:left;">
                                            <span>Retained Earning</span>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="line['debit']"
                                                  t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="line['credit']"
                                                  t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="line['balance']"
                                                  t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                    </tr>
                            </t>
                            <t t-foreach="account_current_earnings" t-as="line">
                                    <tr>
                                        <td colspan="6" style="text-align:left;">
                                            <span>Profit And Loss</span>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="line['debit']"
                                                  t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="line['credit']"
                                                  t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="line['balance']"
                                                  t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                    </tr>
                            </t>
                            <t t-foreach="account_prive" t-as="line">
                                    <tr>
                                        <td colspan="6" style="text-align:left;">
                                            <span>Prive</span>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="line['debit']"
                                                  t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="line['credit']"
                                                  t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="line['balance']"
                                                  t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                    </tr>
                            </t>
                            <td colspan="6" style="border-bottom: 1px solid ;" class="mon_fld"><strong>Total Equity</strong></td>
							<td class="text-right" style="border-bottom: 1px solid ;"><strong><t t-esc="debit_total" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/></strong></td>
							<td class="text-right" style="border-bottom: 1px solid;"><strong><t t-esc="credit_total" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/></strong></td>
                            <td class="text-right" style="border-bottom: 1px solid;"><strong><t t-esc="balance_total" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/></strong></td>

                        </table>
                    </div>
                    <br></br>
                </div>
            </t>
        </t>
    </template>

    <record id="action_print_equity_move" model="ir.actions.report">
            <field name="name">Equity Movement</field>
            <field name="model">account.equity.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">equip3_accounting_reports.equity_move</field>
            <field name="report_file">equip3_accounting_reports.equity_move</field>
    </record>

</odoo>