<?xml version="1.0" encoding="UTF-8"?>

<templates>
    <t t-name="CustomerStatementTemp">
        <div class="">
            <div class="">
                <div>
                    <h1 style="padding:10px">
                        Customer Statement
                    </h1>
                </div>
                <div>
                    <div class="filter_view_tb"></div>
                </div>
                <br></br>
                <div>
                    <div class="table_view_tb mt-5" style="right:20px;"></div>
                </div>
            </div>
        </div>
        
    </t>
    <t t-name="CustomerStatementTable">
        <div class="">
            <div class="table_main_view">
                <t t-foreach="report_lines" t-as="partner">
                    <div class="sub_container_left">
                        <div class="report_print">
                            <div class="">
                                <table cellspacing="0" width="100%">
                                    <thead>
                                        <tr> 
                                            <th style="padding-left:20px; width: 1%;">
                                                <h2><span class="fa fa-user"/></h2>
                                            </th>
                                            <th style="width: 99%;">
                                                <h2><t t-esc="partner['partner_name']"/></h2>
                                            </th>
                                        </tr>
                                        <tr>
                                            <th style="padding-left:20px; width: 1%;">
                                                <h4><span class="fa fa-envelope"/></h4>
                                            </th>
                                            <th style="width: 99%;">
                                                <h4><t t-esc="partner['partner_email']"/></h4>
                                            </th>
                                        </tr>
                                        <tr>
                                            <th style="padding-left:20px; padding-top:20px; padding-bottom:20px;" colspan='3'>
                                                <button class="btn btn-primary followup-letter" t-att-data-target="partner['partner_name']" t-att-data-partner_id="partner['number']"
                                                        style="left:10px; height:30px;position: relative;color:white;background-color: #00A0AD;border-color: #00A0AD; padding:3px;">
                                                    Print Letter
                                                </button>
                                                <button class="btn btn-primary send-email" t-att-data-target="partner['partner_name']" t-att-data-partner_id="partner['number']" t-att-data-real_partner_id="partner['partner_id']" 
                                                        style="left:10px; height:30px;position: relative;color:white;background-color: #00A0AD;border-color: #00A0AD; padding:3px;">
                                                    Send by Email
                                                </button>
                                                <button class="btn btn-primary send-whatsapp" t-att-data-target="partner['partner_name']" t-att-data-partner_id="partner['number']" t-att-data-real_partner_id="partner['partner_id']"
                                                        style="left:10px; height:30px;position: relative;color:white;background-color: #00A0AD;border-color: #00A0AD; padding:3px;">
                                                    Send by Whatsapp
                                                </button>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td style="padding:0px; vertical-align: top;">
                                                <button type="button" id="onButton"><span class="fa fa-fw fa-pencil"/></button>
                                            </td>
                                            <td style="padding-left:20px; padding-right:20px; padding-bottom:50px;">
                                                <div class="center grow-wrap">
                                                    <textarea class='textareainput' name="text" id="text" onInput="this.parentNode.dataset.replicatedValue = this.value" rows='8' readonly='1'><t t-esc="partner['overdue_template']"/></textarea>
                                                </div>
                                                
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div>
                        <t t-set="overdue_lines" t-value="[]"/>
                            <t t-foreach="partner['lines']" t-as="line">
                                <t t-if="line['due_date'] and new Date(line['due_date']).getTime() &lt; new Date().getTime()">
                                    <t t-set="overdue_lines" t-value="overdue_lines + [line]"/>
                                </t>
                            </t>
                        <t t-if="overdue_lines and overdue_lines[0]">
                            <tr style="padding-left:20px; border-top: 3px double #ddd;">
                                <td colspan='7'>
                                    <h2>Overdue</h2>
                                </td>
                            </tr>
                            <table cellspacing="0" class="table center" style="width: 90%;">
                                <thead>
                                    <tr class="trcustom" style="padding-left:20px; border-bottom: 3px double #ddd;">
                                        <th>Reference Number</th>
                                        <th>Date</th>
                                        <th>Date Due</th>
                                        <th>Communication</th>
                                        <th>Expected Date</th>
                                        <th>Excluded</th>
                                        <th style="text-align:right;">Total Due</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <t t-set="none_value" t-value="_"/>
                                    <t t-set="common_id" t-value="0"/>
                                    <t t-foreach="partner['lines']" t-as="line">
                                        <t t-if="new Date(line['due_date']).getTime() &lt; new Date().getTime()">
                                            <tr class="trcustom">
                                                <td>
                                                    <t t-esc="line['move_name']"/>
                                                </td>
                                                <td>
                                                    <t t-esc="line['date']"/>
                                                </td>
                                                <td>
                                                    <t t-esc="line['due_date']"/>
                                                </td>
                                                <td>
                                                    <t t-esc="line['communication']"/>
                                                </td>
                                                <td></td>
                                                <td></td>
                                                <td style="text-align:right;">
                                                    <t t-esc="line['balance']"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                    <tr style="padding-left:20px; border-top: 3px double #ddd;">
                                        <td colspan='6' style="text-align:right;">
                                            Total Overdue
                                        </td>
                                        <td style="text-align:right;">
                                            <t t-esc="overdue_balance"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </t>
                        <t t-set="upcoming_lines" t-value="[]"/>
                            <t t-foreach="partner['lines']" t-as="line">
                                <t t-if="line['due_date'] and new Date(line['due_date']).getTime() &gt; new Date().getTime()">
                                    <t t-set="upcoming_lines" t-value="upcoming_lines + [line]"/>
                                </t>
                            </t>
                        <t t-if="upcoming_lines and upcoming_lines[0]">
                            <tr style="padding-left:20px; border-top: 3px double #ddd;">
                                <td colspan='7'>
                                    <h2>Upcoming</h2>
                                </td>
                            </tr>
                            <table cellspacing="0" class="table center" style="width: 90%;">
                                <thead>
                                    <tr class="trcustom" style="padding-left:20px; border-bottom: 3px double #ddd;">
                                        <th>Reference Number</th>
                                        <th>Date</th>
                                        <th>Date Due</th>
                                        <th>Communication</th>
                                        <th>Expected Date</th>
                                        <th>Excluded</th>
                                        <th style="text-align:right;">Total Due</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <t t-set="none_value" t-value="_"/>
                                    <t t-set="common_id" t-value="0"/>
                                    <t t-foreach="partner['lines']" t-as="line">
                                        <t t-if="new Date(line['due_date']).getTime() &gt; new Date().getTime()">
                                            <tr class="trcustom">
                                                <td>
                                                    <t t-esc="line['move_name']"/>
                                                </td>
                                                <td>
                                                    <t t-esc="line['date']"/>
                                                </td>
                                                <td>
                                                    <t t-esc="line['due_date']"/>
                                                </td>
                                                <td>
                                                    <t t-esc="line['communication']"/>
                                                </td>
                                                <td></td>
                                                <td></td>
                                                <td style="text-align:right;">
                                                    <t t-esc="line['balance']"/>
                                                    <t t-esc="line['balance_without_symbol']"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                    <tr style="padding-left:20px; border-top: 3px double #ddd;">
                                        <td colspan='6' style="text-align:right;">
                                            Total Overdue
                                        </td>
                                        <td style="text-align:right;">
                                            <t t-esc="upcoming_balance"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </t>
                    </div>
                    <hr></hr>
                </t>
            </div>
        </div>
