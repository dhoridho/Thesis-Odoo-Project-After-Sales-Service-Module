<templates>

    <t t-extend="TrialTable">
        <t t-jquery="div.table_main_view" t-operation="replace">
            <div class="table_main_view">
                <table cellspacing="0" width="100%">
                    <thead class="tbl_report_title">
                        <tr>
                            <th colspan="6" rowspan="2">Account <i class="fa fa-sort btn btn-sort" data-sort="name" style="color: darkgrey;" /></th>
                            <th colspan="2" style="text-align: center;">Opening Balance</th>
                            <th colspan="2" style="text-align: center;">Change</th>
                            <th colspan="2" style="text-align: center;">Ending Balance</th>
                        </tr>
                        <tr>
                            <th class="mon_fld">Debit <i class="fa fa-sort btn btn-sort" data-sort="opening_debit" style="color: darkgrey;" /></th>
                            <th class="mon_fld">Credit <i class="fa fa-sort btn btn-sort" data-sort="opening_credit" style="color: darkgrey;" /></th>
                            <th class="mon_fld">Debit <i class="fa fa-sort btn btn-sort" data-sort="debit" style="color: darkgrey;" /></th>
                            <th class="mon_fld">Credit <i class="fa fa-sort btn btn-sort" data-sort="credit" style="color: darkgrey;" /></th>
                            <th class="mon_fld">Debit <i class="fa fa-sort btn btn-sort" data-sort="ending_balance_debit" style="color: darkgrey;" /></th>
                            <th class="mon_fld">Credit <i class="fa fa-sort btn btn-sort" data-sort="ending_balance_credit" style="color: darkgrey;" /></th>
                        </tr>
                        
                    </thead>

                    <tbody>

                        <t t-set="none_value" t-value="_"/>
                        <t t-foreach="report_lines" t-as="account">
                            <t t-set="common_id" t-value="0"/>
                            <tr style="border: 0.5px solid #deb9b9;" class="gl-line collapsed"
                                data-toggle="collapse"
                                t-att-data-account-id="account['id']"
                                t-attf-data-target=".a{{account['id']}}">
                                <td colspan="6" style="border: 0px solid black;">
                                    <span>
                                        <t t-esc="account['code']"/>
                                        -
                                        <t t-esc="account['name']"/>
                                    </span>
                                    <div class="" style="display: inline-block;">
                                        <a type="button" class="dropdown-toggle" data-toggle="dropdown"
                                           aria-expanded="false">
                                        </a>
                                        <div class="dropdown-menu " role="menu">
                                            <div class="o_foldable_menu o_closed_menu ">
                                                <div class="form-group ">
                                                    <div class="show-gl" aria-atomic="true" id="" data-target-input="">
                                                        <li role="presentation">
                                                            <a role="menuitem" style="background-color:aqua; font-weight:bold;"
                                                               t-att-data-account-id="account['id']" class="show-gl">
                                                                View General Ledger
                                                            </a>
                                                        </li>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <t t-if="account['Init_balance']">
                                    <t t-if="currency[1] == 'before'">

                                        <td class="mon_fld">
                                            <t t-esc="currency[0]"/>
                                            <t t-raw="account['opening_debit']"/>
                                        </td>
                                        <td class="mon_fld">
                                            <t t-esc="currency[0]"/>
                                            <t t-raw="account['opening_credit']"/>
                                        </td>
                                    </t>
                                    <t t-else="">
                                        <td class="mon_fld">
                                            <t t-raw="account['opening_debit']"/>
                                            <t t-esc="currency[0]"/>
                                        </td>
                                        <td class="mon_fld">
                                            <t t-raw="account['opening_credit']"/>
                                            <t t-esc="currency[0]"/>
                                        </td>
                                    </t>
                                </t>
                                <t t-else="">
                                    <t t-if="currency[1] == 'before'">
                                        <td class="mon_fld">
                                            <t t-esc="currency[0]"/> 0.00
                                        </td>
                                        <td class="mon_fld">
                                            <t t-esc="currency[0]"/> 0.00
                                        </td>
                                    </t>
                                    <t t-else="">
                                        <td class="mon_fld">
                                            0.00
                                            <t t-esc="currency[0]"/>
                                        </td>
                                        <td class="mon_fld">
                                            0.00
                                            <t t-esc="currency[0]"/>
                                        </td>
                                    </t>
                                </t>
                                
                                <t t-if="currency[1] == 'before'">
                                    <td class="mon_fld">
                                        <t t-esc="currency[0]"/>
                                        <t t-raw="account['debit']"/>
                                    </td>
                                    <td class="mon_fld">
                                        <t t-esc="currency[0]"/>
                                        <t t-raw="account['credit']"/>
                                    </td>

                                </t>
                                <t t-else="">
                                    <td class="mon_fld">
                                        <t t-raw="account['debit']"/>
                                        <t t-esc="currency[0]"/>
                                    </td>
                                    <td class="mon_fld">
                                        <t t-raw="account['credit']"/>
                                        <t t-esc="currency[0]"/>
                                    </td>
                                </t>
                                
                                <t t-if="currency[1] == 'before'">                                    
                                    <td class="mon_fld">
                                        <t t-esc="currency[0]"/>
                                        <t t-raw="account['ending_balance_debit']"/>
                                    </td>
                                    <td class="mon_fld">
                                        <t t-esc="currency[0]"/>
                                        <t t-raw="account['ending_balance_credit']"/>
                                    </td>

                                    <!-- <td class="mon_fld">
                                        <t t-esc="currency[0]"/>
                                        <t t-raw="account['ending_balance']"/>
                                    </td> -->

                                    <!-- <t t-if="account['ending_balance'] >= 0">
                                       <td class="mon_fld">
                                            <t t-esc="currency[0]"/>
                                            <t t-raw="account['ending_balance']"/>
                                        </td>
                                        <td class="mon_fld">
                                            <t t-esc="currency[0]"/>
                                            0.00
                                        </td>
                                    </t>
                                    <t t-else="">
                                        <td class="mon_fld">
                                            <t t-esc="currency[0]"/>
                                            0.00
                                        </td>
                                        <td class="mon_fld">
                                            <t t-esc="currency[0]"/>
                                            <t t-raw="account['ending_balance']"/>
                                        </td>
                                    </t> -->
                                </t>
                                <t t-else="">
                                    <td class="mon_fld">
                                        <t t-raw="account['ending_balance_debit']"/>
                                        <t t-esc="currency[0]"/>
                                    </td>
                                    <td class="mon_fld">
                                        <t t-raw="account['ending_balance_credit']"/>
                                        <t t-esc="currency[0]"/>
                                    </td>

                                    <!-- <td class="mon_fld">
                                        <t t-raw="account['ending_balance']"/>
                                        <t t-esc="currency[0]"/>
                                    </td> -->

                                    <!-- <t t-if="account['ending_balance'] >= 0">
                                       <td class="mon_fld">
                                            <t t-raw="account['ending_balance']"/>
                                            <t t-esc="currency[0]"/>
                                        </td>
                                        <td class="mon_fld">
                                            0.00
                                            <t t-esc="currency[0]"/>
                                        </td>
                                    </t>
                                    <t t-else="">
                                        <td class="mon_fld">
                                            0.00
                                            <t t-esc="currency[0]"/>
                                        </td>
                                        <td class="mon_fld">
                                            <t t-raw="account['ending_balance']"/>
                                            <t t-esc="currency[0]"/>
                                        </td>
                                    </t> -->
                                </t>

                                <t t-set="common_id" t-value="'a'+account['id']"/>
                            </tr>
                            
                        </t>
                        <td colspan="6" style="" class="">
                            <strong>Total</strong>
                        </td>

                        <t t-if="currency[1] == 'before'">
                            <td class="mon_fld" style="">
                                <strong>
                                    <t t-esc="currency[0]"/>
                                    <t t-esc="opening_debit_total"/>
                                </strong>
                            </td>
                            <td class="mon_fld" style="">
                                <strong>
                                    <t t-esc="currency[0]"/>
                                    <t t-esc="opening_credit_total"/>
                                </strong>
                            </td>
                        </t>
                        <t t-else="">

                            <td class="mon_fld" style="">
                                <strong>
                                    <t t-raw="Math.round(opening_debit_total * Math.pow(10, 2)) / Math.pow(10, 2)"/>
                                    <t t-esc="currency[0]"/>
                                </strong>
                            </td>
                            <td class="mon_fld" style="">
                                <strong>
                                    <t t-raw="Math.round(opening_credit_total * Math.pow(10, 2)) / Math.pow(10, 2)"/>
                                    <t t-esc="currency[0]"/>
                                </strong>
                            </td>
                        </t>
                        
                        
                        
                        
                        <t t-if="currency[1] == 'before'">
                            <td class="mon_fld" style="">
                                <strong>
                                    <t t-esc="currency[0]"/>
                                    <t t-esc="debit_total"/>
                                </strong>
                            </td>
                            <td class="mon_fld" style="">
                                <strong>
                                    <t t-esc="currency[0]"/>
                                    <t t-esc="credit_total"/>
                                </strong>
                            </td>
                        </t>
                        <t t-else="">

                            <td class="mon_fld" style="">
                                <strong>
                                    <t t-raw="Math.round(debit_total * Math.pow(10, 2)) / Math.pow(10, 2)"/>
                                    <t t-esc="currency[0]"/>
                                </strong>
                            </td>
                            <td class="mon_fld" style="">
                                <strong>
                                    <t t-raw="Math.round(credit_total * Math.pow(10, 2)) / Math.pow(10, 2)"/>
                                    <t t-esc="currency[0]"/>
                                </strong>
                            </td>
                        </t>
     
                        
                        <t t-if="currency[1] == 'before'">                            
                            <td class="mon_fld" style="">
                                <strong>
                                    <t t-esc="currency[0]"/>
                                    <t t-esc="ending_balance_debit_total"/>
                                </strong>
                            </td>
                            <td class="mon_fld" style="">
                                <strong>
                                    <t t-esc="currency[0]"/>
                                    <t t-esc="ending_balance_credit_total"/>
                                </strong>
                            </td>

                            <!-- <td class="mon_fld" style="">
                                <strong>
                                    <t t-esc="currency[0]"/>
                                    <t t-esc="ending_balance_total"/>
                                </strong>
                            </td> -->
                        </t>
                        <t t-else="">                            
                            <td class="mon_fld" style="">
                                <strong>
                                    <t t-raw="Math.round(ending_balance_debit_total * Math.pow(10, 2)) / Math.pow(10, 2)"/>
                                    <t t-esc="currency[0]"/>
                                </strong>
                            </td>
                            <td class="mon_fld" style="">
                                <strong>
                                    <t t-raw="Math.round(ending_balance_credit_total * Math.pow(10, 2)) / Math.pow(10, 2)"/>
                                    <t t-esc="currency[0]"/>
                                </strong>
                            </td>

                            <!-- <td class="mon_fld" style="">
                                <strong>
                                    <t t-raw="Math.round((ending_balance_total) * Math.pow(10, 2)) / Math.pow(10, 2)"/>
                                    <t t-esc="currency[0]"/>
                                </strong>
                            </td> -->
                        </t>

                    </tbody>

                </table>
            </div>
            
        </t>
    </t>]

