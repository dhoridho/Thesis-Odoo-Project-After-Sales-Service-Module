<templates>
    <t t-name="DebtCollection">
        <div>
            <div>
                <div class="filter_view_tb"></div>
            </div>
            <br></br>
            <div>
                <div class="table_view_tb" style="right:20px;"></div>
            </div>
        </div>
    </t>

    <t t-name="DCTable">
        <div>
            <div class="table_main_view">
                <table cellspacing="0" width="100%">
                    <thead class="tbl_report_title">
                        <tr>
                            <th colspan="3">Customer</th>
                            <th colspan="3">Person in Charge</th>
                            <th class="mon_fld">Invoice Amount</th>
                            <th class="mon_fld">Total Collection Amount</th>
                            <th class="mon_fld">Debt Amount Due</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="report_lines" t-as="partner">
                            <tr style="border: 0.5px solid #deb9b9;" class="gl-line collapsed" data-toggle="collapse"
                                t-att-data-account-id="partner['id']" t-attf-data-target=".a{{partner['id']}}">
                                <td colspan="3" style="border: 0px solid black;">
                                    <i class="fa fa-caret-down" role="img" aria-label="Unfolded" title="Unfolded"></i>
                                    <span>
                                        <t t-esc="partner['name']"/>
                                    </span>
                                </td>
                                <td colspan="3" style="border: 0px solid black;">
                                    <span>
                                        <t t-esc="partner['person_in_charge']"/>
                                    </span>
                                </td>
                                <t t-if="currency[1] == 'before'">
                                    <td class="mon_fld">
                                        <t t-if="partner['invoice_amount'] == 0">
                                            <span>-</span>
                                        </t>
                                        <t t-else="">
                                            <t t-esc="currency[0]"/>
                                            <t t-esc="partner['invoice_amount']"/>
                                        </t>
                                    </td>
                                    <td class="mon_fld">
                                        <t t-if="partner['total_collection_amount'] == 0">
                                            <span>-</span>
                                        </t>
                                        <t t-else="">
                                            <t t-esc="currency[0]"/>
                                            <t t-esc="partner['total_collection_amount']"/>
                                        </t>
                                    </td>
                                    <td class="mon_fld">
                                        <t t-if="partner['debt_amount_due'] == 0">
                                            <span>-</span>
                                        </t>
                                        <t t-else="">
                                            <t t-esc="currency[0]"/>
                                            <t t-esc="partner['debt_amount_due']"/>
                                        </t>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td class="mon_fld">
                                        <t t-if="partner['invoice_amount'] == 0">
                                            <span>-</span>
                                        </t>
                                        <t t-else="">
                                            <t t-esc="partner['invoice_amount']"/>
                                            <t t-esc="currency[0]"/>
                                        </t>
                                    </td>
                                    <td class="mon_fld">
                                        <t t-if="partner['total_collection_amount'] == 0">
                                            <span>-</span>
                                        </t>
                                        <t t-else="">
                                            <t t-esc="partner['total_collection_amount']"/>
                                            <t t-esc="currency[0]"/>
                                        </t>
                                    </td>
                                    <td class="mon_fld">
                                        <t t-if="partner['debt_amount_due'] == 0">
                                            <span>-</span>
                                        </t>
                                        <t t-else="">
                                            <t t-esc="partner['debt_amount_due']"/>
                                            <t t-esc="currency[0]"/>
                                        </t>
                                    </td>
                                </t>
                            </tr>
                            <tr t-attf-class="collapse a{{partner['id']}}">
                                <td colspan="10">
                                    <ul></ul>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </div>
    </t>

    <t t-name="DCFilterView">
        <div>
            <h1 style="padding:10px">
                <t t-esc="title"/>
            </h1>
        </div>
        <div class="" style="position: relative;">
            <div class="sub_container_left"></div>
            <br></br>
            <div class="sub_container_right" style="width:50%;height:3%;right:0px;top:0px;position: absolute;">
                <div>
                    <button class="btn btn-primary o_filters_toggler" id="o_equip_filter_dropdown" style="position: absolute; right: 30.63%; top: 17.78%; bottom: 79.17%; height: 30px; padding: 0; width: 20%;">
                        <span style="align-items: center; justify-content: center;"><i class="fa fa-search mr-2" style="font-size: 17px !important;"/></span>
                        <span style="font-size: 17px;">&#160;Filter</span>
                    </button>

                    <div class="filter_content" style="position:relative; top:43px; left:2%; width:67%; display:none; text-align:right; background-color: white; filter: drop-shadow(0px 0px 16px rgba(0, 0, 0, 0.161)); padding: 5px;">
                        <div style="text-align:center;">
                            <button type="button" id="apply_filter" class="btn btn-primary" style="padding: 0; height: 25px; width: 25%;"
                            >
                                Apply
                            </button>
                        </div>
                        <br />

                        <div class="time_range" style="">
                            <div class="btn-group o_account_reports_date-filter" style="width:100%;">
                                <a type="button" class="dropdown-toggle dropdown-item" data-toggle="dropdown" style="width:100%;">
                                    <span class="fa fa-calendar filter-content" style="float: left;"></span>
                                    <span class="filter-content" style="float: left;">&#160;Invoice Date: </span>
                                    <span class="date_caret"/>
                                </a>
                                <ul class="dropdown-menu o_filters_menu o_date_filter" role="menu" style="width:100%;">
                                    <t>
                                        <li class="filter_date" title="This Month" data-value="this_month"><a class="dropdown-item">This Month</a></li>
                                        <li class="filter_date" title="This Quarter" data-value="this_quarter"><a class="dropdown-item">This Quarter</a></li>
                                        <li class="filter_date" title="This Financial Year" data-value="this_financial_year"><a class="dropdown-item">This Financial Year</a></li>
                                        <li role="separator" class="dropdown-divider"></li>
                                        <li class="filter_date" title="Last Month" data-value="last_month"><a class="dropdown-item">Last Month</a></li>
                                        <li class="filter_date" title="Last Quarter" data-value="last_quarter"><a class="dropdown-item">Last Quarter</a></li>
                                        <li class="filter_date" title="Last Financial Year" data-value="last_year"><a class="dropdown-item">Last Financial Year</a></li>
                                        <li role="separator" class="dropdown-divider"></li>
                                    </t>
                                    <div class="o_generator_menu"><button type="button" aria-expanded="false" class="o_add_custom_filter dropdown-item">Custom</button></div>
                                    <li class="o_account_reports_custom-dates d-none" data-value='custom' style='margin-top: 5px;'>
                                        <div class="o_filter_condition dropdown-item-text">
                                            <label class="" for="date_from"><b>Start Date :</b></label>
                                            <div class="">
                                                <div class="" aria-atomic="true" id="">
                                                    <input class="dropdown-item" type="date" id="date_from"></input>
                                                </div>
                                            </div>
                                            <label class="" for="date_to"><b>End Date :</b></label>
                                            <div class="">
                                                <div class="" aria-atomic="true" id="">
                                                    <input class="dropdown-item" type="date" id="date_to"></input>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <div class="pic_filter" style="width:100%;">
                            <a type="button" class="dropdown-toggle dropdown-item" data-toggle="dropdown" style="width:100%;">
                                <span class="fa fa-filter filter-content" style="float: left;"></span>
                                <span class="filter-content" style="float: left;">&#160;Person in Charge: </span>
                                <span id="user_res"></span>
                            </a>
                            <select class="dropdown-menu pics" name="states[]" multiple="multiple" style="width:100%;">
                                <div role="separator" class="dropdown-divider"></div>
                                <t t-foreach="filter_data.users_list" t-as="user">
                                    <option t-attf-value="{{user[0]}}">
                                        <t t-esc="user[1]"/>
                                    </option>
                                </t>
                            </select>
                        </div>

                        <div class="payment_filter" style="width:100%;">
                            <a type="button" class="dropdown-toggle dropdown-item" data-toggle="dropdown" style="width:100%;">
                                <span class="fa fa-filter filter-content" style="float: left;"></span>
                                <span class="filter-content" style="float: left;">&#160;Payment Method: </span>
                                <span id="journal_res"></span>
                            </a>
                            <select class="dropdown-menu payments" name="states[]" multiple="multiple" style="width:100%;">
                                <div role="separator" class="dropdown-divider"></div>
                                <t t-foreach="filter_data.journals_list" t-as="journal">
                                    <option t-attf-value="{{journal[0]}}">
                                        <t t-esc="journal[1]"/>
                                    </option>
                                </t>
                            </select>
                        </div>

                        <div class="customer_filter" style="width:100%;">
                            <a type="button" class="dropdown-toggle dropdown-item" data-toggle="dropdown" style="width:100%;">
                                <span class="fa fa-filter filter-content" style="float: left;"></span>
                                <span class="filter-content" style="float: left;">&#160;Customer: </span>
                                <span id="partner_res"></span>
                            </a>
                            <select class="dropdown-menu customers" name="states[]" multiple="multiple" style="width:100%;">
                                <div role="separator" class="dropdown-divider"></div>
                                <t t-foreach="filter_data.partners_list" t-as="partner">
                                    <option t-attf-value="{{partner[0]}}">
                                        <t t-esc="partner[1]"/>
                                    </option>
                                </t>
                            </select>
                        </div>

                        <div class="search-state" style="width:100%;">
                            <a type="button" class="dropdown-toggle dropdown-item" data-toggle="dropdown" style="width:100%;">
                                <span class="fa fa-filter filter-content" style="float: left;"></span>
                                <span class="filter-content" style="float: left;">&#160;Status: </span>
                                <span id="state_res"></span>
                            </a>
                            <select id="state" class="dropdown-menu state" name="states[]" style="width:100%;">
                                <div role="separator" class="dropdown-divider"></div>
                                <option value="all">All</option>
                                <option value="on_progress">On Progress</option>
                                <option value="wait_for_payment">Collection Payment</option>
                                <option value="done">Done</option>
                            </select>
                        </div>
                    </div>
                    <button type="button" class="btn btn-primary" id="pdf"
                            style="position: absolute; right: 15.63%; top: 17.78%; bottom: 79.17%; height: 30px;">
                        PDF
                    </button>
                    <button type="button" class="btn btn-primary" id="xlsx"
                            style="position: absolute; right: 3.42%; top: 17.78%; bottom: 79.17%; height: 30px;">
                        XLSX
                    </button>
                </div>
            </div>

            <br /> <br /> <hr />

            <div class="active-filter" style="margin-left: 2%; display: none;">
                <style>
                    .a-active-filter {
                        border: 1px solid black; 
                        border-radius: 25px; 
                        padding: 0 10px 0 10px; 
                        margin-right:5px;
                        display: none;
                    }
                </style>

                <span class="fa fa-circle" style="color: lightgreen;"></span>
                <span class="">&#160;Active filter</span>
                <br />

                <a class="date-filter a-active-filter">
                    <span class="fa fa-calendar"/>
                    <t>Invoice Date: </t>
                    <span class="date_caret"/>
                </a>

                <a class="pic-filter a-active-filter">
                    <span class="fa fa-filter"/>
                    <t>Person in Charge: </t>
                    <span id="user_res"/>
                </a>

                <a class="payment-filter a-active-filter">
                    <span class="fa fa-filter"></span>
                    <span>Payment Method: </span>
                    <span id="journal_res"></span>
                </a>

                <a class="customer-filter a-active-filter">
                    <span class="fa fa-filter"></span>
                    <span>Customer: </span>
                    <span id="partner_res"></span>
                </a>

                <a class="state-filter a-active-filter">
                    <span class="fa fa-filter"></span>
                    <span>Status: </span>
                    <span id="state_res"></span>
                </a>
            </div>
            <br />
            <div class="clear-filter" style="margin-left: 2%; display: none;">
                <style>
                    .btn-clear-filter {
                        border: 1px solid black !important; 
                        border-radius: 25px !important; 
                        padding: 0 10px 0 10px; 
                        margin-right:5px;
                        color: white !important;
                        background-color: #707070 !important;
                    }
                </style>

                <button class="btn-clear-filter btn-secondary">
                    <t>Clear All Filter</t>
                </button>
            </div>
        </div>
    </t>

    <t t-name="DebtSubSection">
        <div class="gl-table-div">
            <table class="table table-sm o_main_table" style="border: 0px solid black;display compact;">
                <thead class="tbl_report_title">
                    <tr style="">
                        <th>Date</th>
                        <th>Invoice</th>
                        <th>Person in Charge</th>
                        <th class="mon_fld">Invoice Amount</th>
                        <th class="mon_fld">Debt Amount Due</th>
                        <th class="mon_fld pr-2">Total Collection Amount</th>
                        <th>Payment Method</th>
                        <th>Collection Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="debt_data" t-as="debt_line">
                        <t t-set="style" t-value="''"/>
                        <t t-set="style_right" t-value="'text-align:right;'"/>
                        <tr>
                            <td t-att-style="style">
                                <t t-esc="debt_line.date"/>
                            </td>
                            <td>
                                <div class="dropdown dropdown-toggle">
                                    <a data-toggle="dropdown" href="#">
                                        <span class="caret"></span>
                                        <span>
                                            <t t-esc="debt_line.invoice_name"/>
                                        </span>
                                    </a>
                                    <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu">
                                        <li>
                                            <a class="view-account-move" tabindex="-1" href="#"
                                               t-att-data-move-id="debt_line.invoice_id">
                                                View Source move
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                            <td>
                                <t t-esc="debt_line.person_in_charge"/>
                            </td>
                            <t t-if="currency_position == 'before'">
                                <td t-att-style="style_right" class="amt">
                                    <t t-if="debt_line.invoice_amount == 0">
                                        <span>-</span>
                                    </t>
                                    <t t-else="">
                                        <t t-esc="currency_symbol"/>
                                        <t t-esc="debt_line.invoice_amount"/>
                                    </t>
                                </td>
                                <td t-att-style="style_right" class="amt">
                                    <t t-if="debt_line.debt_amount_due == 0">
                                        <span>-</span>
                                    </t>
                                    <t t-else="">
                                        <t t-esc="currency_symbol"/>
                                        <t t-esc="debt_line.debt_amount_due"/>
                                    </t>
                                </td>
                                <td t-att-style="style_right" class="amt">
                                    <t t-if="debt_line.total_collection_amount == 0">
                                        <span>-</span>
                                    </t>
                                    <t t-else="">
                                        <t t-esc="currency_symbol"/>
                                        <t t-esc="debt_line.total_collection_amount"/>
                                    </t>
                                </td>
                            </t>
                            <t t-else="">
                                <td t-att-style="style_right" class="amt">
                                    <t t-if="debt_line.invoice_amount == 0">
                                        <span>-</span>
                                    </t>
                                    <t t-else="">
                                        <t t-esc="debt_line.invoice_amount"/>
                                        <t t-esc="currency_symbol"/>
                                    </t>
                                </td>
                                <td t-att-style="style_right" class="amt">
                                    <t t-if="debt_line.debt_amount_due == 0">
                                        <span>-</span>
                                    </t>
                                    <t t-else="">
                                        <t t-esc="debt_line.debt_amount_due"/>
                                        <t t-esc="currency_symbol"/>
                                    </t>
                                </td>
                                <td t-att-style="style_right" class="amt">
                                    <t t-if="debt_line.total_collection_amount == 0">
                                        <span>-</span>
                                    </t>
                                    <t t-else="">
                                        <t t-esc="debt_line.total_collection_amount"/>
                                        <t t-esc="currency_symbol"/>
                                    </t>
                                </td>
                            </t>
                            <td t-att-style="style">
                                <t t-esc="debt_line.payment_method"/>
                            </td>
                            <td t-att-style="style">
                                <t t-esc="debt_line.collection_date"/>
                            </td>
                            <td t-att-style="style">
                                <t t-esc="debt_line.state"/>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </div>
    </t>
</templates>