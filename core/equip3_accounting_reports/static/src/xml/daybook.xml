<templates>

    <t t-extend="DaybookTemp">
        <t t-jquery="div.table_view_db" t-operation="replace">
            <div class="table_view_tb" style="right:20px;"></div>
        </t>
    </t>

    <t t-extend="Daytable">
        <t t-jquery="div.table_main_view" t-operation="replace">
            <div class="table_main_view">
                <table cellspacing="0" width="100%">
                    <thead class="tbl_report_title">
                        <tr>
                            <th colspan="6">Date <i class="fa fa-sort btn btn-sort" data-sort="date" style="color: darkgrey;" /></th>
                            <th class="mon_fld">Debit <i class="fa fa-sort btn btn-sort" data-sort="debit" style="color: darkgrey;" /></th>
                            <th class="mon_fld">Credit <i class="fa fa-sort btn btn-sort" data-sort="credit" style="color: darkgrey;" /></th>
                            <th class="mon_fld">Balance <i class="fa fa-sort btn btn-sort" data-sort="balance" style="color: darkgrey;" /></th>

                        </tr>
                    </thead>
    <!--                    <tbody style="width:100%;">-->
    <!--                    </tbody>-->
                    <tbody>
                        <t t-foreach="report_lines" t-as="account">
                            <t t-set="common_id" t-value="0"/>
                            <tr style="border: 0.5px solid #deb9b9;" t-attf-class="db-line collapsed c{{account['id']}}"
                                data-toggle="collapse"
                                t-att-data-account-id="account['id']"
                                t-attf-data-target=".a{{account['id']}}">
                                <t t-if="currency[1] == 'before'">

                                    <td colspan="6" style="border: 0px solid black;">
                                        <i class="fa fa-caret-down" role="img" aria-label="Unfolded"
                                           title="Unfolded"></i>
                                        <span>
                                            <t t-esc="account['date']"/>
                                        </span>
                                        <td class="mon_fld">
                                            <t t-esc="currency[0]"/>

                                            <t t-raw="account['debit']"/>
                                        </td>
                                        <td class="mon_fld">
                                            <t t-esc="currency[0]"/>

                                            <t t-raw="account['credit']"/>
                                        </td>
                                        <td class="mon_fld">
                                            <t t-esc="currency[0]"/>

                                            <t t-raw="account['balance']"/>
                                        </td>
                                        <t t-set="common_id" t-value="'a'+account['id']"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td colspan="6" style="border: 0px solid black;">
                                        <i class="fa fa-caret-down" role="img" aria-label="Unfolded"
                                           title="Unfolded"></i>
                                        <span>
                                            <t t-esc="account['date']"/>
                                        </span>
                                        <td class="mon_fld">

                                            <t t-raw="account['debit']"/>
                                            <t t-esc="currency[0]"/>

                                        </td>
                                        <td class="mon_fld">

                                            <t t-raw="account['credit']"/>
                                            <t t-esc="currency[0]"/>

                                        </td>
                                        <td class="mon_fld">

                                            <t t-raw="account['balance']"/>
                                            <t t-esc="currency[0]"/>

                                        </td>
                                        <t t-set="common_id" t-value="'a'+account['id']"/>
                                    </td>

                                </t>

                                <tr t-attf-class="collapse a{{account['id']}}">
                                    <td colspan="10">
                                        <ul>
                                        </ul>
                                    </td>
                                </tr>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </t>

    <t t-extend="DaybookTemp">
        <t t-jquery="div.filter_view_db" t-operation="replace">
            <div class="filter_view_db" style="overflow: unset;"></div>
        </t>
    </t>

