                                <span class="filter-content" style="float: left;">&#160;Journals: </span>
                                <span id="journal_res"></span>
                            </a>
                            <select class="dropdown-menu  journals" name="states[]" multiple="multiple" style="width:100%;">
                                <div role="separator" class="dropdown-divider"></div>
                                <t t-foreach="filter_data.journals_list" t-as="journal">
                                    <option t-attf-value="{{journal[0]}}">
