    <t t-name="SubSectiondb">
        <t t-jquery="div.db-table-div" t-operation="replace">
            <div class="db-table-div">
                <table class="table table-sm o_main_table"
                       style="border: 0px solid black;display compact;">
                    <thead>
                        <tr style="">
                            <th>Date <i class="fa fa-sort btn btn-sort-line" data-sort="ldate" style="color: darkgrey;" /></th>
                            <th>JRNL <i class="fa fa-sort btn btn-sort-line" data-sort="lcode" style="color: darkgrey;" /></th>
                            <th>Partner <i class="fa fa-sort btn btn-sort-line" data-sort="partner_name" style="color: darkgrey;" /></th>
                            <th>Move <i class="fa fa-sort btn btn-sort-line" data-sort="move_name" style="color: darkgrey;" /></th>
                            <th>Entry Label <i class="fa fa-sort btn btn-sort-line" data-sort="lname" style="color: darkgrey;" /></th>
                            <th class="mon_fld">Debit <i class="fa fa-sort btn btn-sort-line" data-sort="debit" style="color: darkgrey;" /></th>
                            <th class="mon_fld">Credit <i class="fa fa-sort btn btn-sort-line" data-sort="credit" style="color: darkgrey;" /></th>
                            <th class="mon_fld">Balance <i class="fa fa-sort btn btn-sort-line" data-sort="balance" style="color: darkgrey;" /></th>

                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="account_data" t-as="account_line">
                            <t t-set="style" t-value="''"/>
                            <tr>
                                <td>
                                    <t t-if="account_line.ldate">
                                        <div class="dropdown dropdown-toggle">
                                            <a data-toggle="dropdown" href="#">
                                                <span class="caret"/>
                                                <span data-id="17">
                                                    <t t-esc="account_line.ldate"/>
                                                </span>
                                            </a>
                                            <ul class="dropdown-menu"
                                                role="menu"
                                                aria-labelledby="dropdownMenu">
                                                <li>
                                                    <a class="view-account-move"
                                                       tabindex="-1" href="#"
                                                       t-att-data-move-id="account_line.move_id">
                                                        View Source move
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </t>
                                </td>
                                <td>
                                    <t t-esc="account_line.lcode"/>
                                </td>
                                <td>
                                    <t t-esc="account_line.partner_name"/>
                                </td>
                                <td t-att-style="style">
                                    <t t-esc="account_line.move_name"/>
                                </td>
                                <td t-att-style="style">
                                    <t t-esc="account_line.lname"/>
                                </td>
                                <t t-if="currency_position == 'before'">
                                    <td t-att-style="style" class="text-right">
                                        <t t-if="account_line.debit == 0">
                                            <span>-</span>
                                        </t>
                                        <t t-else="">
                                            <t t-esc="currency_symbol"/>
                                            <t t-esc="account_line.debit_format_currency"/>
    <!--                                        <t t-esc="Math.round(account_line.debit * Math.pow(10, 2)) / Math.pow(10, 2)"/>-->
                                        </t>
                                    </td>
                                    <td t-att-style="style" class="text-right">
                                        <t t-if="account_line.credit == 0">
                                            <span>-</span>
                                        </t>
                                        <t t-else="">
                                            <t t-esc="currency_symbol"/>
                                            <t t-esc="account_line.credit_format_currency"/>
    <!--                                        <t t-esc="Math.round(account_line.credit * Math.pow(10, 2)) / Math.pow(10, 2)"/>-->
                                        </t>
                                    </td>
                                    <td t-att-style="style" class="text-right">
                                        <t t-if="account_line.balance == 0">
                                            <span>-</span>
                                        </t>
                                        <t t-else="">
                                            <t t-esc="currency_symbol"/>
                                            <t t-esc="account_line.balance_format_currency"/>
    <!--                                        <t t-esc="Math.round(account_line.balance * Math.pow(10, 2)) / Math.pow(10, 2)"/>-->
                                        </t>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td t-att-style="style" class="amt">
                                        <t t-if="account_line.debit == 0">
                                            <span>-</span>
                                        </t>
                                        <t t-else="">
                                            <t t-esc="account_line.debit_format_currency"/>
    <!--                                        <t t-esc="Math.round(account_line.debit * Math.pow(10, 2)) / Math.pow(10, 2)"/>-->
                                            <t t-esc="currency_symbol"/>
                                        </t>
                                    </td>
                                    <td t-att-style="style" class="amt">
                                        <t t-if="account_line.credit == 0">
                                            <span>-</span>
                                        </t>
                                        <t t-else="">
                                            <t t-esc="account_line.credit_format_currency"/>
    <!--                                        <t t-esc="Math.round(account_line.credit * Math.pow(10, 2)) / Math.pow(10, 2)"/>-->
                                            <t t-esc="currency_symbol"/>
                                        </t>
                                    </td>
                                    <td t-att-style="style" class="amt">
                                        <t t-if="account_line.balance == 0">
                                            <span>-</span>
                                        </t>
                                        <t t-else="">
                                            <t t-esc="account_line.balance_format_currency"/>
    <!--                                        <t t-esc="Math.round(account_line.balance * Math.pow(10, 2)) / Math.pow(10, 2)"/>-->
                                            <t t-esc="currency_symbol"/>
                                        </t>
                                    </td>

                                </t>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
        
    </t>

</templates>