    <t t-extend="PLTable">
        <t t-jquery="div.table_main_view" t-operation="replace">
            <div class="table_main_view">
                <table cellspacing="0" width="100%">
                    <thead class="tbl_report_title">
                        <tr>
                            <th colspan="7" style="width:69%;">Partner <i class="fa fa-sort btn btn-sort" data-sort="name" style="color: darkgrey;" /></th>
                            <th style="text-align:right;">Debit <i class="fa fa-sort btn btn-sort" data-sort="debit" style="color: darkgrey;" /></th>
                            <th style="text-align:right;">Credit <i class="fa fa-sort btn btn-sort" data-sort="credit" style="color: darkgrey;" /></th>
                            <th style="text-align:right; width:12%;">Balance <i class="fa fa-sort btn btn-sort" data-sort="balance" style="color: darkgrey;" /></th>
                        </tr>
                    </thead>

                    <tbody>
                        <t t-set="none_value" t-value="_"/>
                        <t t-foreach="report_lines" t-as="account">
                            <t t-set="common_id" t-value="0"/>
                            <tr style="border: 0.5px solid #deb9b9;" t-attf-class="pl-line collapsed c{{account['id']}}"
                                data-toggle="collapse"
                                t-att-data-account-id="account['id']"
                                t-attf-data-target=".a{{account['id']}}">
                                <td colspan="7" style="border: 0px solid black;">
                                    <i class="fa fa-caret-down" role="img" aria-label="Unfolded" title="Unfolded"></i>
                                    <span>
                                        <t t-esc="account['name']"/>
                                    </span>
                                </td>

                                <t t-if="currency[1] == 'before'">
                                    <td style="text-align:right;">
                                        <t t-esc="currency[0]"/>
                                        <t t-raw="account['debit']"/>
                                    </td>
                                    <td style="text-align:right;">
                                        <t t-esc="currency[0]"/>
                                        <t t-raw="account['credit']"/>
                                    </td>
                                    <td style="text-align:right;">
                                        <t t-esc="currency[0]"/>
                                        <t t-raw="account['balance']"/>
                                    </td>

                                </t>
                                <t t-else="">
                                    <td style="text-align:right;">
                                        <t t-raw="account['debit']"/>
                                        <t t-esc="currency[0]"/>
                                    </td>
                                    <td style="text-align:right;">
                                        <t t-raw="account['credit']"/>
                                        <t t-esc="currency[0]"/>
                                    </td>
                                    <td style="text-align:right;">
                                        <t t-raw="account['balance']"/>
                                        <t t-esc="currency[0]"/>
                                    </td>

                                </t>
                                <t t-set="common_id" t-value="'a'+account['id']"/>
                            </tr>
                            <tr t-attf-class="collapse a{{account['id']}}">
                                <td colspan="10">
                                    <ul>
                                    </ul>
                                </td>
                            </tr>
                        </t>
                    </tbody>

                </table>
            </div>
        </t>
    </t>

    <t t-name="SubSectionPL">
        <t t-jquery="div.pl-table-div" t-operation="replace">
            <div class="pl-table-div">
                <table class="table table-sm o_main_table"
                       style="border: 0px solid black;display compact;">
                    <thead>
                        <tr style="">
                            <th>Date <i class="fa fa-sort btn btn-sort-line" data-sort="ldate" style="color: darkgrey;" /></th>
