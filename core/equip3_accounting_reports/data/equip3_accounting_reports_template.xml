<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="0">
    <!-- Profit and Loss -->
    <record id="acc_fn_profitandloss" model="account.financial.report">
        <field name="code">PL</field>
        <field name="name">Profit and Loss</field>
        <field name="sign">1</field>
        <field name="type">sum</field>
    </record>

    <record id="acc_fn_grossprofit" model="account.financial.report">
        <field name="code">GRP</field>
        <field name="name">Gross Profit</field>
        <field name="sequence">1</field>
        <field name="sign">1</field>
        <field name="type">sum</field>
        <field name="parent_id" ref="acc_fn_profitandloss"/>
    </record>

    <record id="acc_fn_operatingprofit" model="account.financial.report">
        <field name="code">OPP</field>
        <field name="name">Operating Profit</field>
        <field name="sequence">2</field>
        <field name="sign">1</field>
        <field name="type">sum</field>
        <field name="parent_id" ref="acc_fn_profitandloss"/>
    </record>

    <record id="acc_fn_ebitda" model="account.financial.report">
        <field name="code">EBITDA</field>
        <field name="name">Earnings Before Interest, Taxes, Depreciation, and Amortization</field>
        <field name="sequence">3</field>
        <field name="sign">1</field>
        <field name="type">sum</field>
        <field name="parent_id" ref="acc_fn_profitandloss"/>
    </record>

    <record id="acc_fn_ebit" model="account.financial.report">
        <field name="code">EBIT</field>
        <field name="name">Earnings Before Interest and Taxes</field>
        <field name="sequence">4</field>
        <field name="sign">1</field>
        <field name="type">sum</field>
        <field name="parent_id" ref="acc_fn_profitandloss"/>
    </record>

    <record id="acc_fn_netprofit" model="account.financial.report">
        <field name="code">NPR</field>
        <field name="name">NEt Profit</field>
        <field name="sequence">5</field>
        <field name="sign">1</field>
        <field name="type">sum</field>
        <field name="parent_id" ref="acc_fn_profitandloss"/>
    </record>

    <record id="acc_fn_costofrevenue" model="account.financial.report">
        <field name="code">COR</field>
        <field name="name">Cost Of Revenue</field>
        <field name="sequence">2</field>
        <field name="sign">1</field>
        <field name="type">account_type</field>
        <field name="parent_id" ref="acc_fn_grossprofit"/>
        <field name="account_type_ids" eval="[(4,ref('account.data_account_type_direct_costs'))]"/>
    </record>

    <record id="acc_fn_salesrevenue" model="account.financial.report">
        <field name="code">SAR</field>
        <field name="name">Sales Revenue</field>
        <field name="sequence">1</field>
        <field name="sign">1</field>
        <field name="type">account_type</field>
        <field name="parent_id" ref="acc_fn_grossprofit"/>
        <field name="account_type_ids" eval="[(4,ref('account.data_account_type_revenue'))]"/>
    </record>

    <record id="acc_fn_totalgrossprofit" model="account.financial.report">
        <field name="code">TGRP</field>
        <field name="name">Total Gross Profit</field>
        <field name="sequence">1</field>
        <field name="sign">1</field>
        <field name="type">account_report</field>
        <field name="parent_id" ref="acc_fn_operatingprofit"/>
        <field name="formulas">balance=GRP.balance</field>
    </record>

    <record id="acc_fn_operatingexpense" model="account.financial.report">
        <field name="code">OPE</field>
        <field name="name">Operating Expense</field>
        <field name="sequence">2</field>
        <field name="sign">1</field>
        <field name="type">account_type</field>
        <field name="parent_id" ref="acc_fn_operatingprofit"/>
        <field name="account_type_ids" eval="[(4,ref('account.data_account_type_expenses'))]"/>
    </record>

    <record id="acc_fn_totaloperatingprofit" model="account.financial.report">
        <field name="code">TOPP</field>
        <field name="name">Total Operating Profit</field>
        <field name="sequence">1</field>
        <field name="sign">1</field>
        <field name="type">account_report</field>
        <field name="parent_id" ref="acc_fn_ebitda"/>
        <field name="formulas">balance=OPP.balance</field>
    </record>

    <record id="acc_fn_otherincome" model="account.financial.report">
        <field name="code">OTI</field>
        <field name="name">Other Income</field>
        <field name="sequence">2</field>
        <field name="sign">1</field>
        <field name="type">account_type</field>
        <field name="parent_id" ref="acc_fn_ebitda"/>
        <field name="account_type_ids" eval="[(4,ref('account.data_account_type_other_income'))]"/>
    </record>

    <record id="acc_fn_tebitda" model="account.financial.report">
        <field name="code">TEBITDA</field>
        <field name="name">Total Earnings Before Interest, Taxes, Depreciation, and Amortization</field>
        <field name="sequence">1</field>
        <field name="sign">1</field>
        <field name="type">account_report</field>
        <field name="parent_id" ref="acc_fn_ebit"/>
        <field name="formulas">balance=EBITDA.balance</field>
    </record>

    <record id="acc_fn_amortization" model="account.financial.report">
        <field name="code">AMO</field>
        <field name="name">Amortization</field>
        <field name="sequence">2</field>
        <field name="sign">1</field>
        <field name="type">account_type</field>
        <field name="parent_id" ref="acc_fn_ebit"/>
        <field name="account_type_ids" eval="[(4,ref('equip3_accounting_masterdata.data_acc_t_amortization'))]"/> 
    </record>

    <record id="acc_fn_depreciation" model="account.financial.report">
        <field name="code">DEP</field>
        <field name="name">Depreciation</field>
        <field name="sequence">3</field>
        <field name="sign">1</field>
        <field name="type">account_type</field>
        <field name="parent_id" ref="acc_fn_ebit"/>
        <field name="account_type_ids" eval="[(4,ref('account.data_account_type_depreciation'))]"/>
    </record>

    <record id="acc_fn_tebit" model="account.financial.report">
        <field name="code">TEBIT</field>
        <field name="name">Total Earnings Before Interest and Taxes</field>
        <field name="sequence">1</field>
        <field name="sign">1</field>
        <field name="type">account_report</field>
        <field name="parent_id" ref="acc_fn_netprofit"/>
        <field name="formulas">balance=EBIT.balance</field>
    </record>

    <record id="acc_fn_interest" model="account.financial.report">
        <field name="code">INR</field>
        <field name="name">Interest</field>
        <field name="sequence">2</field>
        <field name="sign">1</field>
        <field name="type">account_type</field>
        <field name="parent_id" ref="acc_fn_netprofit"/>
        <field name="account_type_ids" eval="[(4,ref('equip3_accounting_masterdata.data_acc_t_interest')),
                                              (4,ref('equip3_accounting_masterdata.data_acc_t_intereset_expense'))]"/> 
    </record>

    <record id="acc_fn_taxes" model="account.financial.report">
        <field name="code">TAX</field>
        <field name="name">Taxes</field>
        <field name="sequence">3</field>
        <field name="sign">1</field>
        <field name="type">account_type</field>
        <field name="parent_id" ref="acc_fn_netprofit"/>
        <field name="account_type_ids" eval="[(4,ref('equip3_accounting_masterdata.data_acc_t_tax'))]"/>
    </record>


    <!-- Balance Sheet -->
    <record id="acc_fn_balancesheet" model="account.financial.report">
        <field name="code">BS</field>
        <field name="name">Balance Sheet</field>
        <field name="sign">1</field>
        <field name="type">sum</field>
    </record>

    <record id="acc_fn_assets" model="account.financial.report">
        <field name="code">AS</field>
        <field name="name">Assets</field>
        <field name="sequence">1</field>
        <field name="sign">1</field>
        <field name="type">sum</field>
        <field name="parent_id" ref="acc_fn_balancesheet"/>
    </record>

    <record id="acc_fn_liability0" model="account.financial.report">
        <field name="code">LI</field>
        <field name="name">Liability</field>
        <field name="sequence">2</field>
        <field name="sign">1</field>
        <field name="type">sum</field>
        <field name="parent_id" ref="acc_fn_balancesheet"/>
    </record>

    <record id="acc_fn_equity" model="account.financial.report">
        <field name="code">EQ</field>
        <field name="name">Equity</field>
        <field name="sequence">3</field>
        <field name="sign">1</field>
        <field name="type">account_type</field>
        <field name="parent_id" ref="acc_fn_balancesheet"/>
        <field name="account_type_ids" eval="[(4,ref('account.data_account_type_equity')),
                                              (4,ref('account.data_unaffected_earnings')),
                                              (4,ref('equip3_accounting_masterdata.data_acc_t_prive')),
                                              (4,ref('equip3_accounting_masterdata.data_acc_t_retained_earnings'))]"/>
    </record>

    <record id="acc_fn_currentassets" model="account.financial.report">
        <field name="code">CA</field>
        <field name="name">Current Asset</field>
        <field name="sequence">1</field>
        <field name="sign">1</field>
        <field name="type">account_type</field>
        <field name="parent_id" ref="acc_fn_assets"/>
        <field name="account_type_ids" eval="[(4,ref('account.data_account_type_receivable')),
                                              (4,ref('account.data_account_type_liquidity')),
                                              (4,ref('account.data_account_type_credit_card')),
                                              (4,ref('account.data_account_type_current_assets')),
                                              (4,ref('account.data_account_type_prepayments')),
                                              (4,ref('equip3_accounting_masterdata.data_acc_t_outstanding_receipt')),
                                              (4,ref('equip3_accounting_masterdata.data_acc_t_petty_cash')),
                                              (4,ref('equip3_accounting_masterdata.data_acc_t_supplies')),
                                              (4,ref('equip3_accounting_masterdata.data_acc_t_other_receivable')),
                                              (4,ref('equip3_accounting_masterdata.data_acc_t_inventory')),
                                              (4,ref('equip3_accounting_masterdata.data_acc_t_equipmment'))]"/>
    </record>

    <record id="acc_fn_noncurrentassets" model="account.financial.report">
        <field name="code">NCA</field>
        <field name="name">Non-Current Asset</field>
        <field name="sequence">2</field>
        <field name="sign">1</field>
        <field name="type">account_type</field>
        <field name="parent_id" ref="acc_fn_assets"/>
        <field name="account_type_ids" eval="[(4,ref('account.data_account_type_non_current_assets')),
                                              (4,ref('account.data_account_type_fixed_assets')),
                                              (4,ref('equip3_accounting_masterdata.data_acc_t_building')),
                                              (4,ref('equip3_accounting_masterdata.data_acc_t_vehicle')),
                                              (4,ref('equip3_accounting_masterdata.data_acc_t_property'))]"/>
    </record>

    <record id="acc_fn_liability01" model="account.financial.report">
        <field name="code">CL</field>
        <field name="name">Liability</field>
        <field name="sequence">1</field>
        <field name="sign">1</field>
        <field name="type">account_type</field>
        <field name="parent_id" ref="acc_fn_liability0"/>
        <field name="account_type_ids" eval="[(4,ref('account.data_account_type_payable')),
                                              (4,ref('account.data_account_type_current_liabilities')),
                                              (4,ref('equip3_accounting_masterdata.data_acc_t_other_payable'))]"/>
    </record>

    <record id="acc_fn_noncurrentliability" model="account.financial.report">
        <field name="code">NCL</field>
        <field name="name">Non Current Liabilities</field>
        <field name="sequence">3</field>
        <field name="sign">1</field>
        <field name="type">account_type</field>
        <field name="parent_id" ref="acc_fn_liability0"/>
        <field name="account_type_ids" eval="[(4,ref('account.data_account_type_non_current_liabilities')),
                                              (4,ref('equip3_accounting_masterdata.data_acc_t_long_term_liability'))]"/>
    </record>

    <record id="acc_fn_currentyearearning" model="account.financial.report">
        <field name="code">CYE</field>
        <field name="name">Current Year Earnings</field>
        <field name="sequence">2</field>
        <field name="sign">1</field>
        <field name="type">account_report</field>
        <field name="parent_id" ref="acc_fn_equity"/>
        <field name="formulas">balance=NPR.balance</field>
    </record>
</odoo>