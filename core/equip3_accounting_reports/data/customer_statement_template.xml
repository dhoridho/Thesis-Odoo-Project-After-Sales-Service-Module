<?xml version="1.0" ?>
<odoo>

    <!-- Mail template are declared in a NOUPDATE block
         so users can freely customize/delete them -->
    <data noupdate="1">
        <!--Email template -->
        <record id="email_template_customer_statement" model="mail.template">
            <field name="name">Customer Statment</field>
            <field name="model_id" ref="equip3_accounting_reports.model_customer_statement"/>
            <field name="subject">Customer Statement</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>