<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="equip3_ph_hr_reports_inherit_view_hr_salary_rule_form" model="ir.ui.view">
            <field name="name">equip3_ph_hr_reports_inherit_view_hr_salary_rule_form</field>
            <field name="model">hr.salary.rule</field>
            <field name="inherit_id" ref="hr_payroll_community.hr_salary_rule_form" />
            <field name="arch" type="xml">
                <xpath expr="//group[@name='tax_configuration']" position="after">
                    <group name="report_configurations" string="BIR 2316 Report Configuration">
                        <field name="taxable_compensation_income" attrs="{'invisible': [('salary_rule_tax_category', '!=', 'taxable')]}" />
                        <field name="nontaxable_compensation_income" attrs="{'invisible': [('salary_rule_tax_category', '!=', 'non_taxable')]}" />
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
