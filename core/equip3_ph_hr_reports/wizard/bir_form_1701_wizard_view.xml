<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="bir_form_1701_wizard_form" model="ir.ui.view">
        <field name="name">bir_form_1701_wizard_form.view.form</field>
        <field name="model">bir.form.1701.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <group name="employees">
                    <field name="employee_ids" />

                    <footer>
                        <button name="action_print_report" string="Print" type="object" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel" class="oe_link"/>
                    </footer>
                </group>
            </form>
        </field>
    </record>

    <record id="action_bir_form_1701_wizard_form" model="ir.actions.act_window">
        <field name="name">BIR Form 1701</field>
        <field name="res_model">bir.form.1701.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
   </record>

   <menuitem 
        action="action_bir_form_1701_wizard_form" 
        id="menu_bir_form_1701_wizard_form" 
        parent="hr_payroll_community.menu_hr_payroll_community_root" 
        groups="hr_payroll_community.group_hr_payroll_community_manager"
        sequence="20"/>

