
<odoo>
    <data>

        <record model="ir.ui.view"
                id="awesome_theme_pro.import_theme_style_form">
            <field name="name">import theme style form</field>
            <field name="model">awesome_theme_pro.import_theme_style</field>
            <field name="arch" type="xml">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2" for="file">file</label>
                        <div class="col-sm-10">
                            <field name="file"/>
                        </div>
                    </div>

                    <footer>
                        <button class="btn btn-primary" special="save_and_return" text="save" />
                        <button class="btn btn-secondary" text="cancel" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window"
                id="awesome_theme_pro.import_theme_style_act_window">
            <field name="name">import theme style</field>
            <field name="res_model">awesome_theme_pro.import_theme_style</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
