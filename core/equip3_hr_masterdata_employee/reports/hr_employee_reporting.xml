<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>

        <record id="view_hr_employee_reporting_attachment" model="ir.ui.view">
            <field name="name">hr.employee.reporting.attachment</field>
            <field name="model">hr.employee.reporting.attachment</field>
            <field name="arch" type="xml">
                <form string="Employee Report">
                    <group>
                        <field name="attachment_file" readonly="1" filename="file_name"/>
                        <field name="file_name" invisible="1"/>
                    </group>
                    <footer>
                        <button special="cancel" string="Close" class="oe_highlight" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_hr_employee_reporting_attachment" model="ir.actions.act_window">
            <field name="name">Employee Report Attachment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee.reporting.attachment</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref='view_hr_employee_reporting_attachment'/>
            <field name="target">new</field>
        </record>

        <record id="view_hr_employee_reporting_form" model="ir.ui.view">
            <field name="name">Employee Report</field>
            <field name="model">hr.employee.reporting</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="department_ids" widget="many2many_tags" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                        <field name="company_id" readonly="1"/>
                    </group>
                    <footer>
                        <button name="print_xls" string="Print" type="object"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_hr_employee_reporting_form" model="ir.actions.act_window">
            <field name="name">Employee Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee.reporting</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem name="Employee Report" id="hr_employee_reporting_menu"
                  parent="menu_hr_employee_report"
                  action="action_view_hr_employee_reporting_form"
                  groups="equip3_hr_employee_access_right_setting.group_hr_officer"
                  />

    </data>
</odoo>
