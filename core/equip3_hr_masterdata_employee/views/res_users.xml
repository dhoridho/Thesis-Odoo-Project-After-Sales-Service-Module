<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    Profile-->
    <record id="res_users_view_form_hr_profile_delegation" model="ir.ui.view">
        <field name="name">Res Hr Users View</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="hr.res_users_view_form_profile"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_delegation_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='work_location']" position="after">
                <field name="user_delegation_id"/>
            </xpath>
        </field>
    </record>
</odoo>