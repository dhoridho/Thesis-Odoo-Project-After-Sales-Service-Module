<odoo>
    <data>
        <record id="view_classification_hr_job_form" model="ir.ui.view">
            <field name="name">hr.classification.hr.job.form</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_hr_job_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='department_id']" position="before">
                    <field name="classification_id"/>
                </xpath>
                <xpath expr="//field[@name='department_id']" position="attributes">
                    <attribute name="required">True</attribute>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="replace">
                    <field name="company_id" readonly="1" groups="base.group_multi_company"/>
                    <!-- <field name="branch_id"/> -->
                </xpath>
                <xpath expr="//field[@name='message_follower_ids']" position="replace">
                    <field name="message_follower_ids" widget="mail_followers" options="{'open_attachments': True}"/>
                    <field name="message_ids" widget="mail_thread"/>
                </xpath>
            </field>
        </record>

        <record id="view_view_hr_job_tree_inherit" model="ir.ui.view">
            <field name="name">hr.job.tree.inherit</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_hr_job_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='no_of_employee']" position="attributes">
                    <attribute name="string">Current Employees</attribute>
                </xpath>
                <xpath expr="//field[@name='expected_employees']" position="attributes">
                    <attribute name="string">Forecasted Employees</attribute>
                </xpath>
                <xpath expr="//field[@name='state']" position="attributes">
                    <attribute name="decoration-success">state == 'recruit'</attribute>
                    <attribute name="decoration-danger">state == 'open'</attribute>
                    <attribute name="widget">badge</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_hr_job_form_inherit_masterdata_employee" model="ir.ui.view">
            <field name="name">view.hr.job.form.inherit.masterdata.employee</field>
            <field name="model">hr.job</field>
            <field name="priority">17</field>
            <field name="inherit_id" ref="hr.view_hr_job_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='department_id']" position="after">
                    <field name="parent_job_position_id"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>