<odoo>
    <data>
        <record id="inherit_view_orientation_checklist_form" model="ir.ui.view">
            <field name="name">inherit.view.orientation.checklist.form</field>
            <field name="model">orientation.checklist</field>
            <field name="inherit_id" ref="employee_orientation.view_orientation_checklist_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group[1]" position="replace">
                    <group>
                        <group name="main">
                            <field name="checklist_name"/>
                            <field name="checklist_department"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="company_id" readonly="1" groups="base.group_multi_company"/>
                            <!-- <field name="branch_id"/> -->
                            <field name="create_date" string="Created On"/>
                            <field name="create_uid" string="Created By"/>
                        </group>
                    </group>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>