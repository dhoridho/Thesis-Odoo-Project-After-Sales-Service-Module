<odoo>
    <data>
        <record id="employee_job_classification_tree_view" model="ir.ui.view">
            <field name="name">employee.job.classification.tree.view</field>
            <field name="model">employee.job.classification</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="job_allowance"/>
                    <field name="create_date" string="Created On"/>
                    <field name="create_uid" string="Created By"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="employee_job_classification_form_view">
            <field name="name">employee.job.classification.form.view</field>
            <field name="model">employee.job.classification</field>
            <field name="arch" type="xml">
                <form string="Employee Job Classification">
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                            <field name="description"/>
                            <field name="job_allowance"/>
                            <field name="company_id" readonly="1" groups="base.group_multi_company"/>
                            <!-- <field name="branch_id"/> -->
                            <field name="create_date" string="Created On"/>
                            <field name="create_uid" string="Created By"/>
                        </group>
                        <notebook>
                            <page string="Job Classification Detail">
                                <field name="classify_detail_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="experience_ids" widget="many2many_tags"/>
                                        <field name="job_experience_allowance"/>
                                        <field name="grade_id" widget="many2many_tags"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                </form>
            </field>
        </record>

        <record id="action_employee_job_classification" model="ir.actions.act_window">
            <field name="name">Job Classification</field>
            <field name="res_model">employee.job.classification</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="employee_job_classification_tree_view"/>
        </record>

        <menuitem action="action_employee_job_classification"
                  id="menu_employee_job_classification"
                  parent="hr.menu_human_resources_configuration" sequence="1"/>

        <record model='ir.ui.menu' id='menu_employee_job_classification'>
            <field name="groups_id" eval="[(6, 0, [ref('equip3_hr_employee_access_right_setting.group_hr_officer')])]"/>
        </record>   

    </data>
</odoo>