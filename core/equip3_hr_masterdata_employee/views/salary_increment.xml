<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_salary_increment_form_view_inherit" model="ir.ui.view">
            <field name="name">hr.salary.increment.inherit</field>
            <field name="model">hr.salary.increment</field>
            <field name="priority" eval="90"/>
            <field name="inherit_id" ref="equip3_hr_contract_extend.hr_salary_increment_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form/header/field[@name='state']" position="after">
                    <field name="is_salary_increment_approval_matrix" invisible="1"/>
                    <field name="state1" widget="statusbar" statusbar_visible="draft,approved,generated" attrs="{'invisible':[('is_salary_increment_approval_matrix','!=',False)]}"/>
                </xpath>
                <xpath expr="//form/header/field[@name='state']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_salary_increment_approval_matrix','=',False)]}</attribute>
                </xpath>
                <xpath expr="//notebook/page[2]" position="attributes">
                        <attribute name="attrs">{'invisible': [('is_salary_increment_approval_matrix','=',False)]}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>