        <record id="res_config_settings_view_form_salary_increment_custom" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.hr.salary.increment.custom</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="70"/>
            <field name="inherit_id" ref="equip3_hr_contract_extend.inherit_res_config_settings_view_form_salary_increment"/>
            <field name="arch" type="xml">
                <xpath expr="//h2[.='Salary Increment Follow Up Setting']" position="replace">
                    <h2>Salary Increment Settings</h2>
                </xpath>
                <xpath expr="//div[@id='auto_follow_up_salary_increment_setting']/div[@class='content-group']/div[3]" position="after">
                    <div class="mt16">
                        <field  name="salary_increment_approval_matrix"/>
                        <label for="salary_increment_approval_matrix" string="Salary Increment Approval Matrix" class="oe_inline" style="margin-left:10px;"/>
                    </div>
                    <div attrs="{'invisible':[('salary_increment_approval_matrix','!=',True)]}">
                        <div class="mt16">
                            <label for="salary_increment_approval_method" string="Approval Method"/>
                            <field name="salary_increment_approval_method" class="oe_inline" attrs="{'required':[('salary_increment_approval_matrix','=',True)]}"/>
                        </div>
                        <div class="mt16" attrs="{'invisible':[('salary_increment_approval_method','!=','employee_hierarchy')]}">
                            <label for="salary_level" string="Approval Levels"/>
                            <field style="margin-left:10px;" name="salary_level" class="oe_inline" required="1"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        
