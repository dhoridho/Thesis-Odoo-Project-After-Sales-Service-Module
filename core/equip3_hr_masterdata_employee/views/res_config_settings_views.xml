<!--                                </div>-->
<!--                            </div>-->
<!--                        </div>-->
<!--                    </div>-->
                    <!--                Auto Email Follow Cron-->
                <div class="row mt16 o_settings_container" name="auto_follow_up_emp_change">
                    <div class="col-12 col-lg-6 o_setting_box" id="auto_follow_up_emp_change_setting">
                        <div class="content-group">
                            <div class="mt16">
                                <field  name="auto_follow_emp_change"/>
                                <label for="auto_follow_emp_change" string="Auto Follow Up" class="oe_inline" style="margin-left:10px;"/>
                            </div>
                            <div class="mt16" attrs="{'invisible':[('auto_follow_emp_change','!=',True)]}">
                                <label for="interval_number_emp_change" string="Execute Every"/>
                                <div attrs="{'invisible':[('auto_follow_emp_change','!=',True)]}">
                                    <field name="interval_number_emp_change" class="oe_inline" attrs="{'required':[('auto_follow_emp_change','=',True)]}"/>
                                    <field name="interval_type_emp_change" class="oe_inline" attrs="{'required':[('auto_follow_emp_change','=',True)]}"/>
                                </div>
                            </div>
                            <div class="mt16" attrs="{'invisible':[('auto_follow_emp_change','!=',True)]}">
                                <label for="number_of_repetitions_emp_change" string="Number of Repetitions"/>
                                <field name="number_of_repetitions_emp_change" class="oe_inline" attrs="{'required':[('auto_follow_emp_change','=',True)]}"/>
                            </div>
                            <div class="mt16">
                                <field  name="emp_change_req_approval_matrix"/>
                                <label for="emp_change_req_approval_matrix" string="Employee Change Request Approval Matrix" class="oe_inline" style="margin-left:10px;"/>
                            </div>
                            <div attrs="{'invisible':[('emp_change_req_approval_matrix','!=',True)]}">
                                <div class="mt16">
                                    <label for="emp_change_req_approval_method" string="Approval Method"/>
                                    <field name="emp_change_req_approval_method" class="oe_inline" attrs="{'required':[('emp_change_req_approval_matrix','=',True)]}"/>
                                </div>
                                <div class="mt16" attrs="{'invisible':[('emp_change_req_approval_method','!=','employee_hierarchy')]}">
                                    <label for="emp_change_req_level" string="Approval Levels"/>
                                    <field style="margin-left:10px;" name="emp_change_req_level" class="oe_inline" required="1"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                </xpath>
            </field>
        </record>

