<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hr_location_tree" model="ir.ui.view">
        <field name="name">hr.work.location.object.tree</field>
        <field name="model">work.location.object</field>
        <field name="arch" type="xml">
            <tree string="Work Location">
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="create_date" string="Create On"/>
                <field name="create_uid" string="Create By"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_location_form" model="ir.ui.view">
        <field name="name">hr.work.location.object.form</field>
        <field name="model">work.location.object</field>
        <field name="arch" type="xml">
            <form string="Work Location">
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                        <field name="province_wage_id" required="1"/>
                        <field name="analytic_group_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="company_id" readonly="1" groups="base.group_multi_company"/>
                        <!-- <field name="branch_id"/> -->
                        <field name="create_date" string="Create On"/>
                        <field name="create_uid" string="Create By"/>
                    </group>
                </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
            </form>
        </field>
    </record>

    <record id="action_hr_work_location" model="ir.actions.act_window">
        <field name="name">Work Location</field>
        <field name="res_model">work.location.object</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_hr_location_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Ready to recruit more efficiently?
            </p>
            <p>
                Let's create a work location.
            </p>
        </field>
    </record>
    <menuitem
            id="menu_view_hr_work_location"
            action="action_hr_work_location"
            parent="hr.menu_human_resources_configuration"
            sequence="1"/>
</odoo>
