<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_years_form_view" model="ir.ui.view">
            <field name="name">hr.years.form</field>
            <field name="model">hr.years</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="status" widget="statusbar" statusbar_visible="draft,open,closed" />
                        <button name="create_month" string="Created Monthly Periods"  attrs="{'invisible':[ ('is_hide_create_month','=',True)]}" type="object" class="oe_highlight"/>
                        <button name="to_open" string="Open Periods"  attrs="{'invisible':[('is_hide_open_period','=',True)]}" type="object" class="oe_highlight"/>
                        <button name="to_close" string="Close Periods"  attrs="{'invisible':[('is_hide_close_period','=',True)]}" type="object" class="oe_highlight"/>
                        <button name="to_re_open" string="Re-Open Periods"  attrs="{'invisible':[('state','!=','closed')]}" type="object" class="oe_highlight"/>
                        <button name="create_month" string="Re-create Monthly Periods"  attrs="{'invisible':[('is_hide_open_period','=',True)]}" type="object" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" options="{'format': 0}" attrs="{'readonly':[('status','in',['open','closed'])]}"/>
                                <field name="state" invisible="1"/>
                                <field name="start_date" attrs="{'readonly':[('status','in',['open','closed'])]}"/>
                                <field name="end_date" attrs="{'readonly':[('status','in',['open','closed'])]}"/>
                                <field name="start_period_based_on" attrs="{'readonly':[('state','in',['open','closed'])]}"/>
                                <!-- <field name="branch_id" domain="[('company_id','=',company_id)]" invisible="1"/> -->
                            </group>
                            <group>
                                <field name="create_date"/>
                                <field name="create_uid"/>
                                <field name="company_id" readonly="1" groups="base.group_multi_company"/>
                                <field name="is_hide_create_month" invisible="1"/>
                                <field name="is_hide_open_period" invisible="1"/>
                                <field name="is_hide_close_period" invisible="1"/>
                            </group>

                        </group>
                        <notebook>
                                <page string="Years Periods">
                                    <field name="year_ids">
                                        <tree editable="bottom" create="0" edit="0" delete="0">
                                            <field name="year"/>
                                            <field name="month"/>
                                            <field name="period_name"/>
                                            <field name="code"/>
                                            <field name="start_period"/>
                                            <field name="end_period"/>
                                            <field name="status"/>
                                        </tree>

                                    </field>

                                </page>
                            </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_years_tree_view" model="ir.ui.view">
            <field name="name">ProjectName.hr_years.tree</field>
            <field name="model">hr.years</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" invisible="1"/>
                    <field name="display_name" string="HR Year"/>
                    <field name="state" invisible="1"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="status" decoration-primary="state == 'draft'"
                            decoration-success="state == 'open'"
                            decoration-danger="state == 'closed'" 
                            widget='badge'/>
                </tree>
            </field>
        </record>

        <record id="hr_years_search_view" model="ir.ui.view">
            <field name="name">hr.years.search</field>
            <field name="model">hr.years</field>
            <field name="arch" type="xml">
                <search >
                    <field name="name"/>
                    <group expand="1" string="Group By">
                        <filter string="Draft" name="Draft" domain="[('status','=','draft')]"/>
                        <filter string="Open" name="Open" domain="[('status','=','open')]" context="{}"/>
                        <filter string="Closed" name="Closed" domain="[('status','=','closed')]" context="{}"/>
                        <filter string="Status" name="status" domain="[]" context="{'group_by':'status'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="hr_years_act_window" model="ir.actions.act_window">
            <field name="name">HR Years</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.years</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new HR Years.
                </p>
            </field>
        </record>

        <menuitem name="HR Years" id="hr_years_menu" parent="hr.menu_human_resources_configuration" action="hr_years_act_window"/>
        <record model='ir.ui.menu' id='hr_years_menu'>
            <field name="groups_id" eval="[(6, 0, [ref('equip3_hr_employee_access_right_setting.group_hr_officer')])]"/>
        </record>

    </data>
</odoo>