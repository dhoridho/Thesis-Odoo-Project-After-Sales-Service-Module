<odoo>
    <data>
        <record id="employee_job_experience_tree_view" model="ir.ui.view">
            <field name="name">employee.job.experience.level.tree.view</field>
            <field name="model">employee.job.experience.level</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="create_date" string="Created On"/>
                    <field name="create_uid" string="Created By"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="employee_job_experience_form_view">
            <field name="name">employee.job.experience.level.form.view</field>
            <field name="model">employee.job.experience.level</field>
            <field name="arch" type="xml">
                <form string="Job Experience Level">
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                            <field name="classification_ids" widget="many2many_tags" readonly="1"/>
                            <field name="description"/>
                            <field name="company_id" readonly="1" groups="base.group_multi_company"/>
                            <!-- <field name="branch_id"/> -->
                            <field name="create_date" readonly="1" string="Created On"/>
                            <field name="create_uid" readonly="1" string="Created By"/>
                        </group>
                    </sheet>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                </form>
            </field>
        </record>

        <record id="action_employee_job_experience" model="ir.actions.act_window">
            <field name="name">Job Experience Level</field>
            <field name="res_model">employee.job.experience.level</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="employee_job_experience_tree_view"/>
        </record>

        <menuitem action="action_employee_job_experience"
                  id="menu_employee_job_experience"
                  parent="hr.menu_human_resources_configuration" sequence="1"/>
        <record model='ir.ui.menu' id='menu_employee_job_experience'>
        <field name="groups_id" eval="[(6, 0, [ref('equip3_hr_employee_access_right_setting.group_hr_officer')])]"/>
    </record>

    </data>
</odoo>