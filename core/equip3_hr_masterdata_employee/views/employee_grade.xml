<odoo>
    <data>
        <record id="employee_grade_tree_view" model="ir.ui.view">
            <field name="name">employee.grade.tree.view</field>
            <field name="model">employee.grade</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="minimum_sal" string="Minimum Salary"/>
                    <field name="maximum_sal" string="Maximum Salary"/>
                    <field name="create_date" string="Created On"/>
                    <field name="create_uid" string="Created By"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="employee_grade_form_view">
            <field name="name">employee.grade.form.view</field>
            <field name="model">employee.grade</field>
            <field name="arch" type="xml">
                <form string="Employee Grade">
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                            <field name="job_classification_ids" widget="many2many_tags" readonly="1"/>
                            <field name="description"/>
                            <field name="minimum_sal" string="Minimum Salary"/>
                            <field name="maximum_sal" string="Maximum Salary"/>
                            <field name="company_id" readonly="1" groups="base.group_multi_company"/>
                            <!-- <field name="branch_id"/> -->
                            <field name="create_date" string="Created On"/>
                            <field name="create_uid" string="Created By"/>
                        </group>
                    </sheet>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                </form>
            </field>
        </record>

        <record id="action_employee_grade" model="ir.actions.act_window">
            <field name="name">Employee Grade</field>
            <field name="res_model">employee.grade</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="employee_grade_tree_view"/>
        </record>

        <menuitem action="action_employee_grade"
                  id="menu_employee_grade"
                  parent="hr.menu_human_resources_configuration" sequence="1"/>

        <record model='ir.ui.menu' id='menu_employee_grade'>
                    <field name="groups_id" eval="[(6, 0, [ref('equip3_hr_employee_access_right_setting.group_hr_officer')])]"/>
        </record>

    </data>
</odoo>