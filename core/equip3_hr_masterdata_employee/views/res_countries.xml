<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_country_inherit" model="ir.ui.view">
            <field name="name">res.country.inherit.hashmicro.form</field>
            <field name="model">res.country</field>
            <field name="inherit_id" ref="base.view_country_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state_ids']/tree/field[@name='code']" position="after">
                    <field name="minimum_wage"/>
                </xpath>
            </field>
        </record>
        <record id="res_country_state_inherit" model="ir.ui.view">
            <field name="name">res.country.state.inherit.hashmicro.form</field>
            <field name="model">res.country.state</field>
            <field name="inherit_id" ref="base.view_country_state_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='code']" position="after">
                    <field name="minimum_wage"/>
                </xpath>
            </field>
        </record>
        <record id="res_country_act_window" model="ir.actions.act_window">
            <field name="name">country</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.country</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no country data
                </p>
            </field>
        </record>
        <record id="view_country_custom_tree" model="ir.ui.view">
            <field name="name">res.country.tree</field>
            <field name="model">res.country</field>
            <field name="arch" type="xml">
                <tree string="Country" create="0" delete="0">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="phone_code" string="Code" widget="integer" type="char"/>
                </tree>
            </field>
        </record>
        <menuitem name="Countries" id="res_country_hr_master_data" parent="base.menu_users"
                  action="res_country_act_window"/>

    </data>
</odoo>