<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="employee_marital_status_form_view" model="ir.ui.view">
            <field name="name">employee.marital.status.form</field>
            <field name="model">employee.marital.status</field>
            <field name="arch" type="xml">
                <form string="Employee Marital Status" >
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="create_uid" />
                                <field name="create_date" />
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="employee_marital_status_tree_view" model="ir.ui.view">
            <field name="name">employee.marital.status.tree</field>
            <field name="model">employee.marital.status</field>
            <field name="arch" type="xml">
                <tree string="Employee Marital Status" >
                    <field name="name"/>
                    <field name="create_uid" />
                    <field name="create_date" />
                </tree>
            </field>
        </record>

        <record id="employee_marital_status_search_view" model="ir.ui.view">
            <field name="name">employee.marital.status.search</field>
            <field name="model">employee.marital.status</field>
            <field name="arch" type="xml">
                <search string="Employee Marital Status">
                   <field name="name"/>
                </search>
            </field>
        </record>

        <record id="employee_marital_status_act_window" model="ir.actions.act_window">
            <field name="name">Employee Marital Status</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">employee.marital.status</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Employee Marital Status.
                </p>
            </field>
        </record>

        <menuitem name="Employee Marital Status" id="employee_marital_status_menu"
        parent="hr.menu_human_resources_configuration"
        action="employee_marital_status_act_window"/>
</data>
</odoo>