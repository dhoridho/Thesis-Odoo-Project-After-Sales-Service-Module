<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="employee_change_request_config_form" model="ir.ui.view">
            <field name="name">employee.change.request.config.form</field>
            <field name="model">employee.change.request.config</field>
            <field name="arch" type="xml">
                <form delete="false" create="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="company_id" readonly="1"/>
                                <field name="create_date" />
                                <field name="create_uid" />
                            </group>
                        </group>
                        <notebook>
                            <page name="approval_config_lines" string="Approver Lines">
                                <field name="approval_config_ids"  context="{'approval_config_ids':approval_config_ids}">
                                    <tree editable="bottom">
                                        <field name="sequence" readonly="1" force_save="1"/>
                                        <field name="approver_types" required="1"/>
                                        <field name="approvers" widget="many2many_tags" attrs="{'readonly':[('approver_types','=','by_hierarchy')],'required':[('approver_types','=','specific_approver')]}" force_save="1"/>
                                        <field name="minimum_approver" string="Minimum Approvers" required="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="employee_change_request_config_search" model="ir.ui.view">
            <field name="name">employee.change.request.config.search</field>
            <field name="model">employee.change.request.config</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="level"/>
                </search>
            </field>
        </record>

        <record id="employee_change_request_config_tree" model="ir.ui.view">
            <field name="name">employee.change.request.config.tree</field>
            <field name="model">employee.change.request.config</field>
            <field name="arch" type="xml">
                <tree delete="false" create="false">
                    <field name="name"/>
                    <field name="level" />
                    <field name="create_uid"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>

        <record id="employee_change_request_config_act_window" model="ir.actions.act_window">
            <field name="name">Employee Change Request Configuration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">employee.change.request.config</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no data.
                </p>
            </field>
        </record>

        <menuitem name="Employee Change Request" 
        id="employee_change_request_config_menu" 
        parent="hr.hr_menu_configuration"
        groups="equip3_hr_employee_access_right_setting.group_hr_manager"
                  action="employee_change_request_config_act_window"/>

    </data>
</odoo>
