<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="employee_tree_view_for_org_hierarchy" model="ir.ui.view">
        <field name="name">hr.employee.tree.org.hierarchy</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <tree string="Employees" export_xlsx="false" class="employee_tree_view_hierarchy">
                <field name="image_128" string="Profile" style="width:64px;height:64px" widget="image" />
                <field name="name" readonly="1"/>
                <field name="sequence_code" readonly="1"/>
                <field name="department_id"/>
                <field name="job_id"/>
                <field name="work_location" />
            </tree>
        </field>
    </record>

</odoo>
