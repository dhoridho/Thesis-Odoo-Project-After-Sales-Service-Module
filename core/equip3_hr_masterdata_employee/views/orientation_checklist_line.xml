<odoo>
    <data>
        <record id="inherit_view_checklist_line_form" model="ir.ui.view">
            <field name="name">inherit.view.checklist.line.form</field>
            <field name="model">checklist.line</field>
            <field name="inherit_id" ref="employee_orientation.view_checklist_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group[1]" position="replace">
                    <group>
                        <group name="main">
                            <field name="line_name" />
                            <field name="company_id" readonly="1" groups="base.group_multi_company"/>
                            <!-- <field name="branch_id"/> -->
                        </group>
                        <group>
                            <field name="responsible_user"/>
                            <field name="create_date" string="Created On"/>
                            <field name="create_uid" string="Created By"/>
                        </group>
                    </group>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>