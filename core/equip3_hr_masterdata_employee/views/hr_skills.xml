<odoo>
    <data>
        <record id="inherit_hr_employee_skill_type_view_form" model="ir.ui.view">
            <field name="name">inherit.hr.employee.skill.type.view.form</field>
            <field name="model">hr.skill.type</field>
            <field name="inherit_id" ref="hr_skills.hr_employee_skill_type_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[1]" position="before">
                    <group>
                        <group>
                            <field name="company_id" readonly="1" groups="base.group_multi_company"/>
                            <!-- <field name="branch_id"/> -->
                            <field name="create_date" string="Created On"/>
                            <field name="create_uid" string="Created By"/>
                        </group>
                    </group>
                </xpath>
                <xpath expr="//form/sheet" position="after">
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>