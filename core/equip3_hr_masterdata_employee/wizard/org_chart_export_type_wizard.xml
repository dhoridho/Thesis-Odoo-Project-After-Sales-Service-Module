<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="org_chart_export_type_form_view" model="ir.ui.view">
        <field name="name">org.chart.export.type.form</field>
        <field name="model">org.chart.export.type</field>
        <field name="arch" type="xml">
            <form string="Output Type">
                <sheet>
                    <group>
                        <field name="output_type"/>
                    </group>
                </sheet>
                <footer>
                    <button name="export_chart" type="object" string="Export" onclick="exportForm()" class="oe_highlight"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="org_chart_export_type_action_window" model="ir.actions.act_window">
        <field name="name">Output Type</field>
        <field name="res_model">employee.change.approval.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    </data>
</odoo>
