<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_employee_multi_branch_rule" model="ir.rule">
        <field name="name">HR Employee Multi-Branch</field>
        <field name="model_id" ref="model_hr_employee"/>
        <field name="domain_force">['|',('branch_id', '=', False),('branch_id', 'in', branch_ids)]</field>
    </record>

    <record model="ir.rule" id="employee_multi_company">
        <field name="name">Employee multi-company</field>
        <field name="model_id" ref="model_hr_employee"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>

    <record model="ir.rule" id="contract_multi_company">
        <field name="name">Contract multi-company</field>
        <field name="model_id" ref="model_hr_contract"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>

</odoo>
