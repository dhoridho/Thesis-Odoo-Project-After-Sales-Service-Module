<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
  <t t-name="equip3_hr_masterdata_employee.org_chart_department_template">
    <div id="org-chart-main">
      <div style="width:100%;padding: 10px;display: inline-block;z-index: 100;">
        <button style="float:left;border-radius: 0px;" id="btn-reload" class="btn btn-primary"><i class="fa fa-refresh mr-2"/>Reload</button>
        <div class="o_searchview_input_container" style="position:relative;">
          <input type="text" id="key-word" class="o_input" style="width:200px;height: 32px;float: left;border-radius: 0px;" placeholder="Search"/>
          <ul class="o_searchview_hierarchy_autocomplete dropdown-menu" style="min-width:200px; margin-top:35px; margin-left:70px;">
            <li type="button" id="search-job-position" class="o_menu_item dropdown-item">
              <a>Search Job Position for: <strong class="keyword"/></a>
            </li>
            <li type="button" id="search-dept" class="o_menu_item dropdown-item">
              <a>Search Department for: <strong class="keyword"/></a>
            </li>
          </ul>
        </div>
        <button style="float:left;border-radius: 0px;" id="btn-export" class="btn btn-primary"><i class="fa fa-camera mr-2"></i>Export</button>
        <button style="float:left;border-radius: 0px;margin-left:2px;" id="btn-switch" class="btn btn-primary"><i class="fa fa-exchange mr-2"></i>Switch</button>
      </div>
      <div class="chart_title"></div>
      <div id="chart-container"></div>
    </div>
    <script type="text/javascript">
      $(function() {
        $('#key-word').keyup(function() {
          if (this.value.length === 0) {
            clearFilterResult();
          }else {
            filterNodes(this.value.toLowerCase(), '.job-level');
          }
        });
      });
    </script>
  </t>
</templates>