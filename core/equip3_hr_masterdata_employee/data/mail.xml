<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data noupdate="1">
    <!-- Start Aproover or To Approve State Email template-->
   <record id="email_template_approver_of_emp_change_req" model="mail.template">
            <field name="name">Application for Employee Change Request - Send by Email</field>
            <field name="email_from">${ctx['email_from']|safe}</field>
            <field name="subject">Application for Employee Change Request</field>
            <field name="email_to">${ctx['email_to']|safe}</field>
            <field name="model_id" ref="equip3_hr_masterdata_employee.model_hr_employee_change_request"/>
            <field eval="True" name="auto_delete"/>
            <field name="body_html"><![CDATA[
            <p>Dear ${ctx['approver_name']|safe},</p>
            <br/>
            <p>
                Based on the Employee Change Request. You have approval pending that needs your decision to approve or reject the Employee Change Request from ${object.employee_id.name}.
            </p>
            <br/>
            <p>
                You can approve or reject by clicking this button:
            </p>
            <br/>
            <a href="${ctx['url']|safe}"
               style="padding: 8px 12px; font-size: 12px; color: #FFFFFF; text-decoration: none !important; font-weight: 400; background-color: #875A7B; border: 0px solid #875A7B; border-radius:3px">
               View Form
            </a>
            <br/>
            <br/>
            <p>
                Thank you.
            </p>
            <br/>
            <br/>
        ]]></field>
        </record>
</data>
</odoo>