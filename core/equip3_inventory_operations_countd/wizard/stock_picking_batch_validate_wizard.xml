<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_wizard_stock_picking_batch_validate" model="ir.ui.view">
        <field name="name">stock.picking.batch.validate.wizard</field>
        <field name="model">stock.picking.batch.validate</field>
        <field name="arch" type="xml">
            <form>
                <group name="warehouse">
                    <group>
                        <field name="name" readonly="1" force_save="1"/>
                        <field name="warehouse_id" readonly="1" force_save="1"/>
                    </group>
                    <group name="user_date">
                        <field name="scheduled_date" readonly="1" force_save="1"/>
                        <field name="user_id" readonly="1" force_save="1"/>
                    </group>
                </group>
                <field name="stock_line" readonly="1" force_save="1">
                    <tree>
                        <field name="product_id"/>
                        <field name="transfer_id"/>
                        <field name="location_id"/>
                        <field name="product_uom_qty" string="Demand"/>
                        <field name="reserved_availability" string="Reserved"/>
                        <field name="quantity_done" style="color: #00FF00;"/>
                    </tree>
                    <form>
                        <group name="main_group">
                            <group name="sub_group">
                                <field name="line_id" invisible="1"/>
                                <field name="transfer_id" readonly="1"/>
                                <field name="product_uom_qty" string="Demand" readonly="1"/>
                                <field name="quantity_done" readonly="1"/>
                            </group>
                            <group name="sub_group_child">
                                <field name="product_id" readonly="1"/>
                                <field name="location_id" readonly="1"/>
                                <field name="reserved_availability" string="Reserved" readonly="1"/>
                            </group>
                        </group>
                        <footer>                  
                            <button string="Close" special='cancel' class="btn-secondary"/>
                        </footer>
                    </form>
                </field>
                <div class="stock_batch_validate_notes">
                        <span>The product quantity does not suffice.</span><br/>
                        <span>Do you want to <b>Force Validate</b> the delivery? This may lead to inconsistencies in your inventory.</span>
                    </div>
                <footer>
                    
                    <button name="action_confirm" string="Force Validate" type="object" class="oe_highlight"/>
                        Or                  
                    <button string="Discard" special='cancel' class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
