<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value
                    eval="[('module', '=', 'stock_picking_batch'), ('name', '=', 'seq_picking_batch')]" />
            </function>
            <value eval="{'noupdate': False}" />
        </function>

        <record id="stock_picking_batch.seq_picking_batch" model="ir.sequence">
            <field name="prefix">BTP/%(y)s/%(month)s/%(day)s/</field>
            <field name="padding">3</field>
            <field name="use_date_range">True</field>
            <field name="range_reset">yearly</field>
        </record>

        <!-- Revoke noupdate change -->
        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value
                    eval="[('module', '=', 'stock_picking_batch'), ('name', '=', 'seq_picking_batch')]" />
            </function>
            <value eval="{'noupdate': True}" />
        </function>


    </data>
</odoo>
