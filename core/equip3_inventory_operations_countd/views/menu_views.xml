<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Batch Picking Odoo -->
    <record id="stock_picking_batch.stock_picking_batch_action" model="ir.actions.act_window">
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('stock_picking_batch.stock_picking_batch_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('stock_picking_batch.stock_picking_batch_form')})]"/>
    </record>

    <!-- Batch Picking ActWindow -->
    <record id="batch_picking_tree_action" model="ir.actions.act_window">
        <field name="name">Batch Picking</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.picking.batch</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('stock_picking_batch.stock_picking_batch_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('stock_picking_batch.stock_picking_batch_form')})]"/>
        <field name="view_mode">tree,form</field>
        <field name="context">{'batch_picking': 1}</field>
        <field name="domain">['&amp;', ('location_ids.name', 'not ilike', 'Packing'), ('location_ids.name', 'not ilike', 'Output')]</field>
    </record>

    <!-- Batch Packing ActWindow -->
    <record id="batch_packing_tree_action" model="ir.actions.act_window">
        <field name="name">Batch Packing</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.picking.batch</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('stock_picking_batch.stock_picking_batch_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('equip3_inventory_operations_countd.stock_packing_batch_form_new')})]"/>
        <field name="view_mode">tree,form</field>
        <field name="context">{'batch_packing': 1}</field>
        <field name="domain">[('location_ids.name', 'ilike', 'Packing')]</field>
    </record>

    <!-- Batch Delivery ActWindow -->
    <record id="batch_delivery_tree_action" model="ir.actions.act_window">
        <field name="name">Batch Delivery</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.picking.batch</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('stock_picking_batch.stock_picking_batch_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('equip3_inventory_operations_countd.stock_delivery_batch_form_new')})]"/>
        <field name="view_mode">tree,form</field>
        <field name="context">{'batch_delivery': 1}</field>
        <field name="domain">[('location_ids.name', 'ilike', 'Output')]</field>
    </record>

    <menuitem id="batch_operation_parent"
        name="Batch Operation"
        parent="stock.menu_stock_warehouse_mgmt"
        sequence="9"/>

    <menuitem
            id="batch_operation_pick_child"
            name="Batch Picking"
            parent="equip3_inventory_operations_countd.batch_operation_parent"
            action="batch_picking_tree_action"
    />
    <menuitem
            id="batch_operation_pack_child"
            name="Batch Packing"
            parent="equip3_inventory_operations_countd.batch_operation_parent"
            action="batch_packing_tree_action"
    />
    <menuitem
            id="batch_operation_delivery_child"
            name="Batch Delivery"
            parent="equip3_inventory_operations_countd.batch_operation_parent"
            action="batch_delivery_tree_action"
    />

    <record id="stock_picking_batch.stock_picking_to_batch_action_stock_picking" model="ir.actions.act_window">
        <field name="binding_model_id" eval="False"/>
    </record>


</odoo>
