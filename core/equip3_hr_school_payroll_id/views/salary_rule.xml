<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="hr_salary_rule_employee_wages_base_on_class" model="hr.salary.rule">
            <field name="code">TECH_CLSS</field>
            <field name="sequence" eval="10"/>
            <field name="appears_on_payslip" eval="1"/>
            <field name="condition_range">contract.wage</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="condition_select">python</field>
            <field name="amount_select">code</field>
            <field name="active" eval="1"/>
            <field name="name">Employee’s Wages based on Classes</field>
            <field name="condition_python">employee = contract.employee_id
if employee:
    employee_type = payslip.env['hr.payslip'].get_teacher_employee_type(employee.id)
    result = employee_type == 'employee_wages_based_on_classes'
else:
    result = False</field>
            <field name="amount_python_compute">result = contract.rate_per_class * worked_days.TCH_CLS.number_of_days if worked_days.TCH_CLS else 0</field>
            <field name="category_id" ref="hr_payroll_community.GROSS"/>
            <field name="quantity">1.0</field>
        </record>

        <record id="hr_salary_rule_employee_wages_base_on_hours" model="hr.salary.rule">
            <field name="code">TECH_HRS</field>
            <field name="sequence" eval="20"/>
            <field name="appears_on_payslip" eval="1"/>
            <field name="condition_range">contract.wage</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="condition_select">python</field>
            <field name="amount_select">code</field>
            <field name="active" eval="1"/>
            <field name="name">Employee’s Wages based on Hours</field>
            <field name="condition_python">employee = contract.employee_id
if employee:
    employee_type = payslip.env['hr.payslip'].get_teacher_employee_type(employee.id)
    result = employee_type == 'employee_wages_based_on_hours'
else:
    result = False</field>
            <field name="amount_python_compute">result = contract.rate_per_hour * worked_days.TCH_HRS.number_of_hours if worked_days.TCH_HRS else 0</field>
            <field name="category_id" ref="hr_payroll_community.GROSS"/>
            <field name="quantity">1.0</field>
        </record>

    </data>
</odoo>