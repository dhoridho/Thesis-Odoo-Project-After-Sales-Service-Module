<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="school_config_settings_form_view" model="ir.ui.view">
            <field name="name">school.config.settings.form</field>
            <field name="model">school.config.settings</field>
            <field name="arch" type="xml">
                <form string="School Settings" delete="false" create="false">
                    <sheet>
                        <group name="approval_matrix_settings" string="Approval Matrix Settings">
                             <field name="name" invisible="1"/>
                            <group name="leave_approval_matrix">
                                <field name="leave_approval_matrix" string="Student Leave Approval Matrix"/>
                            </group>
                        </group>

                        <group name="student_leave_request_settings" string="Student Leave Request">
                            <group name="student_leave_request_per_subject">
                                <field name="student_leave_request_per_subject" string="Student Leave Request Per Subject"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="school_config_settings_tree_view" model="ir.ui.view">
            <field name="name">school.config.settings.tree</field>
            <field name="model">school.config.settings</field>
            <field name="arch" type="xml">
                <tree delete="false" create="false">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="school_config_settings_act_windows" model="ir.actions.act_window">
            <field name="name">School Settings</field>
            <field name="res_model">school.config.settings</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no Data
                </p>
            </field>
        </record>

        <menuitem id="school_settings_root_menu" name="School Settings" sequence="100" parent="school.menu_ems" groups="base.group_no_one"/>
        <record id="school_settings_root_menu" model="ir.ui.menu">
            <field name="equip_icon_class">o-hm-sidebar-parent-agriculture-configuration</field>
        </record>

        <menuitem name="Settings" id="school_config_settings_menu" sequence="10" parent="school_settings_root_menu" action="school_config_settings_act_windows"/>
    </data>
</odoo>