<odoo>
    <data noupdate="1">
        <record id="hr_training_histories_stage_expiry" model="ir.cron">
            <field name="name">Training Histories Stage Expiry</field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="nextcall" eval="(DateTime.now()).strftime('%Y-%m-%d 22:00:00')"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="equip3_hr_training.model_training_histories"/>
            <field name="state">code</field>
            <field name="doall" eval="True"/>
            <field name="code">model.update_expiry_state()</field>
        </record>

        <record id="hr_employee_training_history_stage_expiry" model="ir.cron">
            <field name="name">Training Employee History Stage Expiry</field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="nextcall" eval="(DateTime.now()).strftime('%Y-%m-%d 22:00:00')"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="equip3_hr_training.model_training_history_line"/>
            <field name="state">code</field>
            <field name="doall" eval="True"/>
            <field name="code">model.update_expiry_state()</field>
        </record>
    </data>
</odoo>