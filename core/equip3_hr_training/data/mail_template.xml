        <record id="mail_template_invite_test" model="mail.template">
            <field name="name">Test: Invite Training</field>
            <field name="model_id" ref="model_training_conduct"/>
            <field name="subject">Participate to ${ctx['title']} Test</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px; font-size: 13px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear ${ctx['name']}
                        <br/>
                        <br/>
                        Invitation to Training Course's ${ctx['test_type']}: ${ctx['test_name']}.
                        <div style="margin: 16px 0px 16px 0px;">
                            <a href="${ctx.get('url_test')}"
                               style="background-color: #875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;">

                                Start Test
                            </a>
                        </div>
                        Thank you for your participation.
                    </p>
                </div>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>


    <!-- Start Certificate Email template-->
        <record id="email_template_completed_training" model="mail.template">
            <field name="name">Completed Training - Send by Email</field>
            <field name="subject">Completed Training: ${object.conduct_id.course_id.name}</field>
            <field name="email_to">${(object.employee_id.work_email) |safe}</field>
            <field name="model_id" ref="equip3_hr_training.model_training_conduct_line"/>
            <field eval="True" name="auto_delete"/>
            <field name="body_html"><![CDATA[
            <p>Dear ${object.employee_id.name},</p>
            <br/>
            <p>
                Congratulations, you have successfully completed the training program for ${object.conduct_id.course_id.name}.
            </p>
            <p>
                Which was held on (${ctx['date_from']|safe} to ${ctx['date_to']|safe}).</br>
                You can get the certificate in the attachment.
            </p>
            <p>
               Hopefully, the experience gained during the training can be useful
            </p>

            <br/>
            <br/>
            <p>
                Thank you.
            </p>
            <br/>
            <br/>
        ]]></field>
        </record>
