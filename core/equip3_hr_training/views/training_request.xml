<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_training_request_filter" model="ir.ui.view">
            <field name="name">training.request.filter</field>
            <field name="model">training.request</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="employee_id"/>
                    <filter string="Pending My Approval" name="pending_my_approval" domain="[('approvers_ids', 'in', uid),('approved_user_ids','not in',uid)]"/>
                </search>
            </field>
        </record>

        <record id="form_training_request" model="ir.ui.view">
            <field name="name">form.training.request</field>
            <field name="model">training.request</field>
            <field name="arch" type="xml">
                <form string="Training Request Form">
                    <header>
                        <button string="Confirm" name="action_confirm" states="draft" type="object"
                                class="oe_highlight"/>
                        <button string="Approve" name="wizard_approve" type="object" class="oe_highlight"
                                attrs="{'invisible': ['|', ('is_approver', '=', False), ('state', '!=', 'to_approve')]}"/>
                        <button string="Reject" name="wizard_reject" type="object" class="oe_highlight"
                                attrs="{'invisible': ['|', ('is_approver', '=', False), ('state', '!=', 'to_approve')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,to_approve,approved,cancelled" attrs="{'invisible':[('is_training_approval_matrix','=',False)]}"/>
                        <field name="state1" widget="statusbar" statusbar_visible="draft,approved" attrs="{'invisible':[('is_training_approval_matrix','!=',False)]}"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1 class="o_row">
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="employee_id" attrs="{'readonly':['|',('is_readonly','=',True),('state','!=','draft')]}" domain="[('id','in',domain_employee_ids)]" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}" required="1"/>
                                <field name="domain_employee_ids" invisible="1"/>
                                <field name="is_readonly" invisible="1"/>
                                <field name="job_id"/>
                                <field name="department_id" invisible="1"/>
                                <field name="training_job_id" widget="many2many_tags"/>
                                <field name="course_id" attrs="{'readonly': [('state','!=','draft')]}"/>
                                <field name="training_required" invisible="1"/>
                                <field name="company_id" invisible="1"/>
                                <field name="description" attrs="{'readonly': [('state','!=','draft')]}"/>
                            </group>
                            <group>
                                <field name="approvers_ids" widget="many2many_tags" invisible="1"/>
                                <field name="approved_user_ids" widget="many2many_tags" invisible="1" readonly="0"/>
                                <field name="is_approver" invisible="1"/>
                                <field name="approved_user_text" invisible="1"/>
                                <field name="approved_user" invisible="1" readonly="1"/>
                                <field name="feedback_parent" invisible="1"/>
                                <field name="is_training_approval_matrix" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Approval Matrix Lines" attrs="{'invisible':[('is_training_approval_matrix','=',False)]}">
                                <field name="training_approver_user_ids">
                                    <tree editable="bottom" create="false" delete="false">
                                        <field name="name"/>
                                        <field name="user_ids" widget="many2many_tags" readonly="1" force_save="1"/>
                                        <field name="matrix_user_ids" widget="many2many_tags" invisible="1" readonly="1" force_save="1"/>
                                        <field name="is_delegation_mail_sent" invisible="1"/>
                                        <field name="minimum_approver" readonly="1" force_save="1"/>
                                        <field name="timestamp" invisible="1" force_save="1"/>
                                        <field name="approver_state" invisible="1" force_save="1"/>
                                        <field name="approval_status" readonly="1" force_save="1"/>
                                        <field name="approved_time" readonly="1" force_save="1"/>
                                        <field name="is_approve" invisible="1" force_save="1"/>
                                        <field name="approved_employee_ids" invisible="1"/>
                                        <field name="feedback" readonly="1" force_save="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--tree-->
        <record id="tree_training_request" model="ir.ui.view">
            <field name="name">tree.training.request</field>
            <field name="model">training.request</field>
            <field name="arch" type="xml">
                <tree string="Training Request Tree">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="course_id"/>
                    <field name="description"/>
                    <field name="state" decoration-primary="state == 'draft'"
                            decoration-warning="state == 'to_approve'"
                            decoration-secondary="state == 'cancelled'"
                            decoration-success="state == 'approved'" 
                            decoration-danger="state == 'rejected'" 
                            widget='badge' string='status'/>
                </tree>
            </field>
        </record>


        <record id="action_training_request" model="ir.actions.server">
            <field name="name">My Training Request</field>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="model_id" ref="equip3_hr_training.model_training_request"/>
            <field name="code">action = model.custom_menu()</field>
            
        </record>

