<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
        //dont delete it !!!!!!!


        <record id="equip3_hr_training_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.equip3_hr_training</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Training Approval" string="Training Approval"
                         data-key="equip3_hr_training">
                         <p>
                            <h3 style="text-indent: 15px;">Training</h3>

                        </p>
                        <h2>Training Settings</h2>
                        <div class="row mt16 o_settings_container" name="training_approval_setting_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="training_approval_control_setting"
                                 title="Training Approval">
                                <div class="content-group">
                                    <div class="mt16">
                                        <div class="o_setting_left_pane">
                                            <field name="training_approval_matrix"/>
                                        </div>
                                        <div class="o_setting_right_pane">
                                            <label for="training_approval_matrix" string="Training Approval Matrix"/>
                                        </div>
                                        <div class="o_setting_right_pane">
                                            <div class="text-muted">
                                                On/Off switch for approval matrix on Training Request, Training Cancellation, Training Conduct Request and Training Conduct Cancellation.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mt16" attrs="{'invisible':[('training_approval_matrix','=',False)]}">
                                        <label for="training_type_approval" string="Approval Method"/>
                                        <field style="margin-left:10px;" name="training_type_approval" class="oe_inline"
                                               required="1"/>
                                    </div>
                                    <div class="mt16"
                                         attrs="{'invisible':['|', ('training_approval_matrix','=',False), ('training_type_approval','!=','employee_hierarchy')]}">
                                        <label for="training_level" string="Approval Levels"/>
                                        <field style="margin-left:16px;" name="training_level" class="oe_inline"
                                               required="1"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <h2>Notification</h2>
                        <div class="row mt16 o_settings_container" name="training_setting_container">
                            <div class="col-12 col-lg-6 o_setting_box"
                                 id="equip3_hr_training.leaves_notification_wa_setting">
                                <div class="o_setting_left_pane">
                                    <field name="send_by_wa_training"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label string="Send By Whatsapp" for="send_by_wa_training"/>
                                </div>
                            </div>
                        </div>
                        <div class="row mt16 o_settings_container"
                             name="equip3_hr_training.whatsapp_setting_container">
                            <div class="col-12 col-lg-6 o_setting_box"
                                 id="equip3_hr_training.notification_email_setting">
                                <div class="o_setting_left_pane">
                                    <field name="send_by_email"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label string="Send By Email" for="send_by_email"/>
                                </div>
                            </div>
                        </div>
                        <!--                Auto Email Follow Cron-->
                        <div class="row mt16 o_settings_container" name="auto_follow_up_training">
                            <div class="col-12 col-lg-6 o_setting_box" id="auto_follow_up_training_setting">
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="auto_follow_up_training"/>
                                        <label for="auto_follow_up_training" string="Auto Follow Up" class="oe_inline"
                                               style="margin-left:10px;"/>
                                    </div>
                                    <div class="mt16" attrs="{'invisible':[('auto_follow_up_training','!=',True)]}">
                                        <label for="interval_number_training" string="Execute Every"/>
                                        <div attrs="{'invisible':[('auto_follow_up_training','!=',True)]}">
                                            <field name="interval_number_training" class="oe_inline"
                                                   attrs="{'required':[('auto_follow_up_training','=',True)]}"/>
                                            <field name="interval_type_training" class="oe_inline"
                                                   attrs="{'required':[('auto_follow_up_training','=',True)]}"/>
                                        </div>
                                    </div>
                                    <div class="mt16" attrs="{'invisible':[('auto_follow_up_training','!=',True)]}">
                                        <label for="number_of_repetitions_training" string="Number of Repetitions"/>
                                        <field name="number_of_repetitions_training" class="oe_inline"
                                               attrs="{'required':[('auto_follow_up_training','=',True)]}"/>
                                    </div>
                                </div>
                            </div>
                </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="equip3_hr_training_approval_config_settings_action" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'equip3_hr_training', 'bin_size': False}</field>
        </record>
    </data>
</odoo>
