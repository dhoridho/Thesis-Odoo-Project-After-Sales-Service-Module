<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="form_training_histories" model="ir.ui.view">
            <field name="name">form.training.histories</field>
            <field name="model">training.histories</field>
            <field name="arch" type="xml">
                <form string="Training Histories Form" create="false" edit="false">
                    <header>
                        <field name="state" widget="statusbar"/>

                        <field name="stage_course_id" widget="statusbar" options="{'clickable': False, 'fold_field': 'fold'}"  domain="[('id','in',stage_course_domain_ids)]" invisible="1"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1 class="o_row">
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="training_conduct_line_id" invisible="1"/>
                                <field name="stage_course_id" options="{'clickable': False, 'fold_field': 'fold'}"  domain="[('id','in',stage_course_domain_ids)]" invisible="1"/>
                                <field name="training_conduct_id" invisible="1"/>
                                <field name="stage_course_domain_ids" invisible="1"/>
                                <field name="employee_id" readonly="0" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                <field name="start_date" readonly="1"/>
                                <field name="end_date" readonly="1"/>
                                <field name="job_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                <field name="course_ids" widget="many2many_tags"/>
                                <field name="company_id" invisible="1"/>
                                <field name="training_required"/>
                                <field name="training_context" readonly="1"/>
                                <field name="training_req_id" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--tree-->
        <record id="tree_training_histories" model="ir.ui.view">
            <field name="name">tree.training.histories</field>
            <field name="model">training.histories</field>
            <field name="arch" type="xml">
                <tree string="Training Histories Tree" create="false">
                    <field name="training_conduct_line_id" invisible="1"/>
                    <field name="course_ids" widget="many2many_tags"/>
                    <field name="employee_id"/>
                    <field name="job_id"/>
                    <field name="start_date" readonly="1"/>
                    <field name="end_date" readonly="1"/>
                    <field name="expiry_date" readonly="1"/>
                    <field name="training_required"/>
                    <field name="state" decoration-primary="state == 'to_do'"
                            decoration-warning="state == 'on_progress'"
                            decoration-secondary="state == 'expired'"
                            decoration-success="state == 'success'" 
                            decoration-danger="state == 'failed'" 
                            widget='badge' string='Status'/>
                    <field name="stage_course_domain_ids" invisible="1"/>
                    <field name="stage_course_id" widget="statusbar" options="{'clickable': False, 'fold_field': 'fold'}"  domain="[('id','in',stage_course_domain_ids)]" invisible="1"/>
                    <field name="created_by_model" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_training_histories_filter" model="ir.ui.view">
			<field name="name">training.histories.select</field>
			<field name="model">training.histories</field>
			<field name="arch" type="xml">
				<search string="Search Training Histories">
					<field name="employee_id"/>
                    <field name="state"/>
                    <filter name="state1" string="To Do" domain="[('state','=', 'to_do')]"/>
                    <filter name="state2" string="Expired" domain="[('state','=', 'expired')]"/>
                    <filter name="state3" string="Failed" domain="[('state','=', 'failed')]"/>
					<group expand="0" string="Group By...">
						<filter name="group_employee_id" icon="terp-check" domain="[]" context="{'group_by':'employee_id'}" />
					</group>
				</search>
			</field>
		</record>

        <!-- <record id="action_training_histories" model="ir.actions.act_window">
            <field name="name">Training Histories</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">training.histories</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_group_employee_id':1}</field>
        </record> -->


        <record id="action_training_histories" model="ir.actions.server">
            <field name="name">Training Histories</field>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="model_id" ref="equip3_hr_training.model_training_histories"/>
            <field name="code">action = model.custom_menu()</field>
            
        </record>
<!--Training Gap-->
        <record id="tree_training_histories_gap" model="ir.ui.view">
            <field name="name">tree.training.histories.gap</field>
            <field name="model">training.histories</field>
            <field name="arch" type="xml">
                <tree string="Training Gap" create="false">
                    <field name="training_conduct_line_id" invisible="1"/>
                    <field name="course_ids" widget="many2many_tags"/>
                    <field name="employee_id"/>
                    <field name="job_id"/>
                    <field name="training_required"/>
                    <field name="training_context"/>
                    <field name="state" decoration-primary="state == 'to_do'"
                            decoration-warning="state == 'on_progress'"
                            decoration-secondary="state == 'expired'"
                            decoration-success="state == 'success'" 
                            decoration-danger="state == 'failed'" 
                            widget='badge' string='Status'/>
                    <field name="stage_course_domain_ids" invisible="1"/>
                    <field name="stage_course_id" widget="statusbar" options="{'clickable': False, 'fold_field': 'fold'}"  domain="[('id','in',stage_course_domain_ids)]" invisible="1"/>
                    <field name="created_by_model" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="action_training_gap" model="ir.actions.act_window">
            <field name="name">Training To Do</field>
            <field name="res_model">training.histories</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state', 'in', ['to_do'])]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('equip3_hr_training.tree_training_histories_gap')})]"/>
        </record>

<!--        My Training List-->
        <record id="action_my_training_list" model="ir.actions.act_window">
            <field name="name">My Training List</field>
            <field name="res_model">training.histories</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('employee_id.user_id', '=', uid)]</field>
        </record>

    </data>
</odoo>