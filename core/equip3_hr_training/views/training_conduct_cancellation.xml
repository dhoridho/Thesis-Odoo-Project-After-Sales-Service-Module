<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="training_conduct_cancellation_form" model="ir.ui.view">
            <field name="name">training.conduct.cancellation.form</field>
            <field name="model">hr.training.conduct.cancellation</field>
            <field name="arch" type="xml">
                <form string="Training Conduct Cancellation Form">
                    <header>
                        <button string="Confirm" name="action_confirm" states="draft" type="object"
                                class="oe_highlight"/>
                        <button string="Approve" name="wizard_approve" type="object" class="oe_highlight"
                                attrs="{'invisible': ['|', ('is_approver', '=', False), ('state', '!=', 'to_approve')]}"/>
                        <button string="Reject" name="wizard_reject" type="object" class="oe_highlight"
                                attrs="{'invisible': ['|', ('is_approver', '=', False), ('state', '!=', 'to_approve')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,to_approve,approved" attrs="{'invisible':[('is_training_approval_matrix','=',False)]}"/>
                        <field name="state1" widget="statusbar" statusbar_visible="draft,approved" attrs="{'invisible':[('is_training_approval_matrix','!=',False)]}"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1 class="o_row">
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="training_conduct_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="course_id"/>
                                <field name="trainer_type"/>
                                <field name="employee_ids" widget="many2many_tags" attrs="{'invisible' : [('trainer_type', '=', 'external')]}"/>
                                <field name="external_trainer" attrs="{'invisible' : [('trainer_type', '!=', 'external')]}"/>
                                <field name="estimated_cost"/>
                                <field name="employee_id" invisible="1"/>
                                <field name="job_id" invisible="1"/>
                                <field name="department_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="minimal_score"/>
                                <field name="created_by"/>
                                <field name="created_date"/>
                                <!--Approval MAtrix-->
                                <field name="approvers_ids" widget="many2many_tags" invisible="1"/>
                                <field name="approved_user_ids" widget="many2many_tags" invisible="1" readonly="0"/>
                                <field name="is_approver" invisible="1"/>
                                <field name="approved_user_text" invisible="1"/>
                                <field name="approved_user" invisible="1" readonly="1"/>
                                <field name="feedback_parent" invisible="1"/>
                                <field name="is_training_approval_matrix" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Training Conduct Line">
                                <field name="conduct_cancell_line_ids" style="pointer-events:none;">
                                    <tree readonly="1" create="false" delete="false">
                                        <field name="employee_id"/>
                                        <field name="attended"/>
                                        <field name="remarks"/>
                                        <field name="attachment"/>
                                        <field name="pre_test" string="Pre-Test" force_save="1"/>
                                        <field name="post_test" string="Post-Test" force_save="1"/>
                                        <field name="status" string="Status" readonly="1" force_save="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Approval Matrix Lines" attrs="{'invisible':[('is_training_approval_matrix','=',False)]}">
                                <field name="training_conduct_cancel_approver_user_ids">
                                    <tree editable="bottom" create="false" delete="false">
                                        <field name="name"/>
                                        <field name="user_ids" widget="many2many_tags" readonly="1" force_save="1"/>
                                        <field name="minimum_approver" readonly="1" force_save="1"/>
                                        <field name="timestamp" invisible="1" force_save="1"/>
                                        <field name="approver_state" invisible="1" force_save="1"/>
                                        <field name="approval_status" readonly="1" force_save="1"/>
                                        <field name="approved_time" readonly="1" force_save="1"/>
                                        <field name="is_approve" invisible="1" force_save="1"/>
                                        <field name="approved_employee_ids" invisible="1"/>
                                        <field name="feedback" readonly="1" force_save="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--tree-->
        <record id="training_conduct_cancellation_tree" model="ir.ui.view">
            <field name="name">hr.training.conduct.cancellation.tree</field>
            <field name="model">hr.training.conduct.cancellation</field>
            <field name="arch" type="xml">
                <tree string="Training Conduct Cancellation Tree">
                    <field name="name"/>
                    <field name="training_conduct_id"/>
                    <field name="course_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="state" decoration-primary="state == 'draft'"
                            decoration-warning="state == 'to_approve'"
                            decoration-success="state == 'approved'" 
                            widget='badge' string='Status'/>
                </tree>
            </field>
        </record>

        <record id="action_training_conduct_cancellation" model="ir.actions.act_window">
            <field name="name">Training Conduct Cancellation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.training.conduct.cancellation</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>