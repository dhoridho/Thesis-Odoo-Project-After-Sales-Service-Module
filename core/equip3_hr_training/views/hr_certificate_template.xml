<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_certificate_template_form_view" model="ir.ui.view">
            <field name="name">hr.certificate.template.form</field>
            <field name="model">hr.certificate.template</field>
            <field name="arch" type="xml">
                <form string="Certificate Template">
                    <sheet>
                        <group>
                            <div class="oe_title" style="width: 100%;">
                                <h1>
                                    <field name="name"/>
                                </h1>
                            </div>
                        </group>
                        <notebook>
                            <page name="certificate_content" string="Certificate Content">
                                <field name="certificate_content" nolabel="1"/>
                            </page>
                            <page name="certificate_content_variable" string="Variables">
                                <field name="certificate_template_variables_ids" readonly="1" force_save="1">
                                    <tree>
                                        <field name="variable_name" force_save="1"/>
                                        <field name="description" string="Descriptions" force_save="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="hr_certificate_template_tree_view" model="ir.ui.view">
            <field name="name">hr.certificate.template.tree</field>
            <field name="model">hr.certificate.template</field>
            <field name="arch" type="xml">
                <tree string="Certificate Template">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="hr_certificate_template_search_view" model="ir.ui.view">
            <field name="name">hr.certificate.template.search</field>
            <field name="model">hr.certificate.template</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>
        <record id="hr_certificate_template_act_window" model="ir.actions.act_window">
            <field name="name">Certificate Template</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.certificate.template</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>
    </data>
</odoo>