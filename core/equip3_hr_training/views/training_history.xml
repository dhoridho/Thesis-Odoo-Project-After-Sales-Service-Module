<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="form_training_request" model="ir.ui.view">
            <field name="name">form.training.request</field>
            <field name="model">training.request</field>
            <field name="arch" type="xml">
                <form string="Training Request Form">
                    <header>
                        <button string="Confirm" name="action_confirm" states="draft" type="object"
                                class="oe_highlight"/>
                        <button string="Approve" name="action_approve" states="to_approve" type="object"
                                class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,to_approve,approved"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1 class="o_row">
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="employee_id" readonly="1"/>
                                <field name="job_id"/>
                                <field name="course_ids" widget="many2many_tags"/>
                                <field name="company_id" invisible="1"/>
                                <field name="description"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--tree-->
        <record id="tree_training_request" model="ir.ui.view">
            <field name="name">tree.training.request</field>
            <field name="model">training.request</field>
            <field name="arch" type="xml">
                <tree string="Training Request Tree">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="course_ids"/>
                    <field name="start_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="action_training_request" model="ir.actions.act_window">
            <field name="name">Training Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">training.request</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>