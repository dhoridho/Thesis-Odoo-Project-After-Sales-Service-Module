<odoo>
    <data>
        <record model="ir.ui.view" id="hr_training_form">
            <field name="name">training.stages.form</field>
            <field name="model">training.stages</field>
            <field name="arch" type="xml">
                <form string="Stage">
                    <sheet>
                        <group name="stage_definition" string="Stage Definition">
                            <group>
                                <field name="is_default_stages" invisible="1"/>
                                <field name="name" attrs="{'readonly':[('is_default_stages','=',True)]}"/>
                                <field name="sequence" attrs="{'readonly':[('is_default_stages','=',True)]}"/>
                                <field name="template_id" domain="[('model_id.model', '=', 'training.conduct')]"
                                       attrs="{'readonly':[('is_default_stages','=',True)]}"/>
                            </group>
                            <group name="stage_details">
                                <field name="fold" attrs="{'readonly':[('is_default_stages','=',True)]}"/>
                            </group>
                        </group>
                        <group name="tooltips" string="Tooltips">
                            <p class="text-muted" colspan="2">
                                You can define here the labels that will be displayed for the kanban state instead
                                of the default labels.
                            </p>
                            <label for="legend_normal" string=" " class="o_status"/>
                            <field name="legend_normal" nolabel="1"
                                   attrs="{'readonly':[('is_default_stages','=',True)]}"/>
                            <label for="legend_blocked" string=" " class="o_status o_status_red"/>
                            <field name="legend_blocked" nolabel="1"
                                   attrs="{'readonly':[('is_default_stages','=',True)]}"/>
                            <label for="legend_done" string=" " class="o_status o_status_green"/>
                            <field name="legend_done" nolabel="1"
                                   attrs="{'readonly':[('is_default_stages','=',True)]}"/>
                        </group>
                        <separator string="Requirements"/>
                        <field name="requirements" attrs="{'readonly':[('is_default_stages','=',True)]}"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="training_stages_tree_view" model="ir.ui.view">
            <field name="name">tree.training.stages</field>
            <field name="model">training.stages</field>
            <field name="arch" type="xml">
                <tree string="Training Courses Tree">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="fold"/>
                </tree>
            </field>
        </record>

        <!-- Stage Action -->
        <record id="training_stages_act" model="ir.actions.act_window">
            <field name="name">Training Stages</field>
            <field name="res_model">training.stages</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create new training stages
                </p>
            </field>
        </record>
    </data>
</odoo>