<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="training_level_form" model="ir.ui.view">
            <field name="name">training.level.form</field>
            <field name="model">training.level</field>
            <field name="arch" type="xml">
                <form string="Training Level Form">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="f_score_1"/>
                                <field name="f_score_2"/>
                                <field name="final_score"/>
                                <field name="description"/>
                                <field name="target"/>
                                <field name="create_date" invisible="1"/>
                                <field name="create_by" invisible="1"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--tree-->
        <record id="training_level_tree" model="ir.ui.view">
            <field name="name">training.level.tree</field>
            <field name="model">training.level</field>
            <field name="arch" type="xml">
                <tree string="Training Level Tree" editable="bottom">
                    <field name="name"/>
                    <field name="f_score_1"/>
                    <field name="f_score_2"/>
                    <field name="final_score"/>
                    <field name="description"/>
                    <field name="target"/>
                </tree>
            </field>
        </record>

        <record id="training_level_action" model="ir.actions.act_window">
            <field name="name">Training Level</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">training.level</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>