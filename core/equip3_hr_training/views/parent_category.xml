<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="parent_category_form" model="ir.ui.view">
            <field name="name">parent.category.form</field>
            <field name="model">parent.category</field>
            <field name="arch" type="xml">
                <form string="Parent Category Form">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="create_date" readonly="1"/>
                                <field name="create_by" readonly="1"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--tree-->
        <record id="parent_category_tree" model="ir.ui.view">
            <field name="name">parent.category.tree</field>
            <field name="model">parent.category</field>
            <field name="arch" type="xml">
                <tree string="Parent Category Tree">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="parent_category_action" model="ir.actions.act_window">
            <field name="name">Parent Category</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">parent.category</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>