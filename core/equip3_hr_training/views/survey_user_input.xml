<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="equip3_hr_training_survey_user_input_form_inherit" model="ir.ui.view">
            <field name="name">equip3_hr_training.survey_user_input.form</field>
            <field name="model">survey.user_input</field>
            <field name="inherit_id" ref="survey.survey_user_input_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='access_token']" position="after">
                    <field name="is_hr_training" invisible="1" />
                    <field name="training_id" string="Training Conduct" readonly="1" force_save="1" attrs="{'invisible':[('is_hr_training','=',False)]}" />
                    <field name="employee_id" string="Employee" readonly="1" force_save="1" attrs="{'invisible':[('is_hr_training','=',False)]}"/>
                    <field name="test_type" string="Test Type" readonly="1" force_save="1" attrs="{'invisible':[('is_hr_training','=',False)]}"/>
                </xpath>
            </field>
        </record>

        <record id="equip3_hr_training_survey_user_input_tree_inherit" model="ir.ui.view">
            <field name="name">equip3_hr_training.survey_user_input.tree</field>
            <field name="model">survey.user_input</field>
            <field name="inherit_id" ref="survey.survey_user_input_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='scoring_percentage']" position="before">
                    <field name="is_hr_training" invisible="1" />
                    <field name="survey_type" invisible="1" />
                    <field name="score_by_amount" string="Score By Amount"/>
                    <field name="employee_id" string="Employee" attrs="{'column_invisible':[('is_hr_training','=',False)]}" />
                    <field name="test_type" string="Test Type" attrs="{'column_invisible':[('is_hr_training','=',False)]}" />
                </xpath>

                <xpath expr="//field[@name='create_date']" position="attributes">
                    <attribute name="string">Taken On</attribute> 
                </xpath>
           
            </field>
        </record>


        <record id="equip3_hr_training_survey_user_input_search_inherit" model="ir.ui.view">
            <field name="name">equip3_hr_training.survey_user_input.search</field>
            <field name="model">survey.user_input</field>
            <field name="inherit_id" ref="survey.survey_user_input_view_search"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='group_by_survey']" position="after">
                    <filter name="group_by_employee" string="Employee" domain="[]" context="{'group_by': 'employee_id'}"/>
                    <filter name="group_by_test_type" string="Test Type" domain="[]" context="{'group_by': 'test_type'}"/>
                </xpath>
            </field>
        </record>



    </data>
</odoo>