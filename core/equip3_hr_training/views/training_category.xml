<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="form_training_category" model="ir.ui.view">
            <field name="name">form.training.category</field>
            <field name="model">training.category</field>
            <field name="arch" type="xml">
                <form string="Training Category Form">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="parent_category_id" invisible="1"/>
<!--                                <field name="evaluation_type"/>-->
                                <field name="create_date" readonly="1"/>
                                <field name="create_by" readonly="1"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--tree-->
        <record id="tree_training_category" model="ir.ui.view">
            <field name="name">tree.training.category</field>
            <field name="model">training.category</field>
            <field name="arch" type="xml">
                <tree string="Training Category Tree">
                    <field name="name"/>
<!--                    <field name="evaluation_type"/>-->
                </tree>
            </field>
        </record>

        <record id="action_training_category" model="ir.actions.act_window">
            <field name="name">Training Category</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">training.category</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>