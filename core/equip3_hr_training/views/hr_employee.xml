<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_employee_form_training_inherit" model="ir.ui.view">
            <field name="name">hr.employee.form.training.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="equip3_hr_career_transition.hr_master_data_employee_transisiton_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='transition_history']" position="after">
                    <page string="Training History" name="training_history">
                        <field name="training_history_ids" readonly="1" force_save="1">
                            <tree editable="bottom">
                                <field name="employee_id" invisible="1"/>
                                <field name="job_id" invisible="1"/>
                                <field name="training_required" invisible="1"/>
                                <field name="course_id"/>
                                <field name="date_completed"/>
                                <field name="expiry_date"/>
                                <field name="certificates" filename="certificate_attachment_fname" widget="binary"/>
                                <field name="certificate_attachment_fname" invisible="1"/>
                                <field name="state"/>
                                <field name="training_conduct_id" invisible="1"/>
                                <field name="start_date" invisible="1"/>
                                <field name="stage_course_id" invisible="1"/>
                                <field name="stage_course_domain_ids" invisible="1"/>
                                <field name="training_conduct_line_id" invisible="1"/>
                                <field name="created_by_model" invisible="1"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>