<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="training_report_form" model="ir.ui.view">
            <field name="name">training.report.form</field>
            <field name="model">training.report</field>
            <field name="arch" type="xml">
                <form string="Training Report Form">
                    <sheet>
                        <group>
                            <group>
                                <field name="based_on" required="1"/>
                                <field name="all_training_category"/>
                                <field name="training_category_ids" widget='many2many_tags'
                                       attrs="{'invisible':[('all_training_category','=', True)],'required':[('all_training_category','=','False')]}"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                            <group>
                                <field name="all_job" attrs="{'invisible':[('based_on','!=','by_job_position')]}"/>
                                <field name="job_ids" widget='many2many_tags'
                                       attrs="{'invisible':['|',('based_on','!=','by_job_position'),('all_job','=', True)], 'required':[('all_job','=','False')]}"/>
                                <field name="all_dept" attrs="{'invisible':[('based_on','!=','by_department')]}"/>
                                <field name="department_ids"
                                       attrs="{'invisible':['|',('based_on','!=','by_department'),('all_dept','=', True)], 'required':[('all_dept','=','False')]}"
                                       widget="many2many_tags"/>
                            </group>
                        </group>
                        <field name="employee_ids"/>
                    </sheet>
                    <footer>
                        <button name="training_print_xls" string="Print" type="object"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="training_report_action" model="ir.actions.act_window">
            <field name="name">Training Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">training.report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="view_training_report_attachment" model="ir.ui.view">
            <field name="name">training.report.attachment</field>
            <field name="model">training.report.attachment</field>
            <field name="arch" type="xml">
                <form string="Training Report">
                    <group>
                        <field name="attachment_file" readonly="1" filename="file_name"/>
                        <field name="file_name" invisible="1"/>
                    </group>
                    <footer>
                        <button special="cancel" string="Close" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="training_report_attachment_action" model="ir.actions.act_window">
            <field name="name">Training Report Attachment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">training.report.attachment</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>