        <field name="parent_id" ref="base.module_category_human_resources"/>
        <field name="sequence">18</field>
    </record>

    <record id="equip3_hr_training.group_hr_training_self_service" model="res.groups">
        <field name="name">Self Service</field>
        <field name="category_id" ref="equip3_hr_training.module_category_hr_training"/>
    </record>

