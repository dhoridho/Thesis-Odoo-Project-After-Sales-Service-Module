        <field name="name">Supervisor</field>
        <field name="category_id" ref="equip3_hr_training.module_category_hr_training"/>
        <field name="implied_ids" eval="[(4, ref('equip3_hr_training.group_hr_training_self_service'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>


    <record id="equip3_hr_training.group_hr_training_manager" model="res.groups">
        <field name="name">HR Manager</field>
        <field name="category_id" ref="equip3_hr_training.module_category_hr_training"/>
        <field name="implied_ids" eval="[(4, ref('equip3_hr_training.group_hr_training_supervisor'))]"/>
    </record>

    <record id="equip3_hr_training.group_hr_training_director" model="res.groups">
        <field name="name">Director</field>
        <field name="category_id" ref="equip3_hr_training.module_category_hr_training"/>
        <field name="implied_ids" eval="[(4, ref('equip3_hr_training.group_hr_training_manager'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="equip3_hr_training.group_hr_training_administrator" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="equip3_hr_training.module_category_hr_training"/>
        <field name="implied_ids" eval="[(4, ref('equip3_hr_training.group_hr_training_director'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

