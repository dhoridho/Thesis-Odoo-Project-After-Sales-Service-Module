<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="sh_representative_report_doc" inherit_id="sh_purchase_reports.sh_representative_report_doc">
        <xpath expr="//t" position="replace">
            <t t-call="web.html_container">
                <t t-call="equip3_purchase_report.purchase_bill_summary_exclusive_external_layout">
                    <t t-set="theme_color" t-value="company_id and company_id.theme_color"/>
                    <t t-set="theme_text_color" t-value="company_id and company_id.theme_text_color"/>
                    <t t-set="company_color" t-value="company_id and company_id.company_color"/>
                    <t t-set="company_address_color" t-value="company_id and company_id.company_address_color"/>
                    <t t-set="customer_color" t-value="company_id and company_id.customer_color"/>
                    <t t-set="customer_address_color" t-value="company_id and company_id.customer_address_color"/>
                    <t t-set="text_color" t-value="company_id and company_id.text_color"/>
                    <div class="page" t-att-style="'font-family:'+company_id.font_id.family+';font-size:'+str(company_id.font_size)+'px;'">
                        <div class="oe_structure" />
                        <div class="row">
                            <div class="col-12 mx-auto">
                                <div class="text-center">
                                    <b>
                                        <h4>Purchase Report By Purchase Representative</h4>
                                    </b>
                                    <b>
                                        <span t-esc="date_start"/>
                                        -
                                        <span t-esc="date_end"/>
                                    </b>
                                </div>
                            </div>
                        </div>
                        <br />
                        <br />
                        <div align="left"  style="color:#4D4D4F; padding: 0px 0px 15px 0px;" valign="top">
                            <table border="0" cellpadding="0" cellspacing="0" t-attf-style="color:#fff; text-transform:capitalize; border: 1px solid #{theme_color or '#000000'};" width="100%">
                                <tr t-attf-style="color: #{theme_text_color or '#000000'}; background-color: #{theme_color or '#000000'};">
                                    <td t-attf-style="padding:9px 15px; font-weight:bold;">
                                        <span>Printed On</span>
                                        <br/>
                                        <span t-esc="print_date"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <t t-if="user_order_dic">
                            <t t-foreach="user_order_dic.keys()" t-as="user">
                                    <b>
                                        <span class="text-left">Purchase Representative :</span>
                                        <span class="text-left" t-esc="user" />
                                    </b>
                                <t t-set="total" t-value="0" />
                                <t t-set="total_amount_invoiced" t-value="0" />
                                <t t-set="total_amount_due" t-value="0" />
                                <table BORDERCOLOR="#{theme_color or '#000000'}" border="1" cellpadding="0" cellspacing="0" class="table table-sm o_main_table" style="border:0.5px solid #ccc;  border-collapse: collapse; text-transform:capitalize; padding:15px;border-bottom:1px solid #ccc;" width="100%">
                                    <thead>
                                        <tr t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'};">
                                            <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">Order Number</th>
                                            <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">Order Date</th>
                                            <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">Vendor</th>
                                            <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">Total</th>
                                            <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">Amount Invoiced</th>
                                            <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">Amount Due</th>
                                        </tr>
                                     </thead>
                                     <tbody class="sale_tbody">
                                        <tr t-foreach="user_order_dic[user]" t-as="order">
                                            <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                <span t-esc="order.get('order_number','')" />
                                            </td>
                                            <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                <span t-esc="order.get('order_date','')" t-options="{'widget': 'datetime'}" />
                                            </td>
                                            <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                <span t-esc="order.get('vendor','')" />
                                            </td>
                                            <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                <span t-esc="order.get('total',0)" t-options='{"widget": "monetary", "display_currency": currency}' />
                                            </td>
                                            <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                <span t-esc="order.get('paid_amount',0)" t-options='{"widget": "monetary", "display_currency": currency}' />
                                            </td>
                                            <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                <span t-esc="order.get('due_amount',0)" t-options='{"widget": "monetary", "display_currency": currency}' />
                                            </td>
                                            <t t-set="total" t-value="total + order.get('total',0)" />
                                            <t t-set="total_amount_invoiced" t-value="total_amount_invoiced + order.get('paid_amount',0)" />
                                            <t t-set="total_amount_due" t-value="total_amount_due + order.get('due_amount',0)" />
                                        </tr>
                                        <tr>
                                            <td></td>
                                            <td></td>
                                            <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                <b>Total</b>
                                            </td>
                                            <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                <span t-esc="total" t-options='{"widget": "monetary", "display_currency": currency}' />
                                            </td>
                                            <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                <span t-esc="total_amount_invoiced" t-options='{"widget": "monetary", "display_currency": currency}' />
                                            </td>
                                            <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                <span t-esc="total_amount_due" t-options='{"widget": "monetary", "display_currency": currency}' />
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </t>
                        </t>
                    </div>
                </t>
            </t>
        </xpath>
    </template>

</odoo> 