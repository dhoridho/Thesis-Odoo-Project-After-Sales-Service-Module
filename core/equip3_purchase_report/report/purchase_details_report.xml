<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sh_pr_details_report_doc" inherit_id="sh_purchase_reports.sh_pr_details_report_doc">
        <xpath expr="//t" position="replace">
            <t t-call="web.html_container">
                <t t-call="equip3_purchase_report.purchase_bill_summary_exclusive_external_layout">
                    <t t-set="theme_color" t-value="company_id and company_id.theme_color"/>
                    <t t-set="theme_text_color" t-value="company_id and company_id.theme_text_color"/>
                    <t t-set="company_color" t-value="company_id and company_id.company_color"/>
                    <t t-set="company_address_color" t-value="company_id and company_id.company_address_color"/>
                    <t t-set="customer_color" t-value="company_id and company_id.customer_color"/>
                    <t t-set="customer_address_color" t-value="company_id and company_id.customer_address_color"/>
                    <t t-set="text_color" t-value="company_id and company_id.text_color"/>
                    <div class="page" t-att-style="'font-family:'+company_id.font_id.family+';font-size:'+str(company_id.font_size)+'px;'">
                        <div class="oe_structure"/>
                        <t t-call="equip3_purchase_report.purchase_bill_summary_watermark"/>
                        <br/>
                        <div width="100%">
                            <div  style="padding:0px 20px 20px 20px; margin:0; background:#fff; line-height:20px;" width="100%">
                                <div class="row">
                                    <div class="col-12 mx-auto">
                                        <div class="text-center">
                                            <b>
                                                <h4>Purchase Details</h4>
                                            </b>
                                            <b>
                                                <span t-esc="date_start" />
                                                -
                                                <span t-esc="date_stop" />
                                            </b>
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <div align="left"  style="color:#4D4D4F; padding: 0px 0px 15px 0px;" valign="top">
                                    <table border="0" cellpadding="0" cellspacing="0" t-attf-style="color:#fff; text-transform:capitalize; border: 1px solid #{theme_color or '#000000'};" width="100%">
                                        <tr t-attf-style="color: #{theme_text_color or '#000000'}; background-color: #{theme_color or '#000000'};">
                                            <td t-attf-style="padding:9px 15px; font-weight:bold;">
                                                <span>Printed On</span>
                                                <br/>
                                                <span t-esc="print_date"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <br/>
                                <h6>Products</h6>
                                <t t-set="currency" t-value="currency" />
                                <table BORDERCOLOR="#{theme_color or '#000000'}" border="1" cellpadding="0" cellspacing="0" class="table table-sm o_main_table" style="border:0.5px solid #ccc;  border-collapse: collapse; text-transform:capitalize; padding:15px;border-bottom:1px solid #ccc;" width="100%">
                                    <thead>
                                        <tr t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'};">
                                            <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">Product</th>
                                            <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">Quantity</th>
                                            <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">Price Unit</th>
                                        </tr>
                                    </thead>
                                    <tbody class="sale_tbody">
                                        <tr t-foreach="products" t-as="line">
                                            <t t-set="internal_reference" t-value="line['code'] and '[%s] ' % line['code'] or ''" />
                                            <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'"><t t-esc="internal_reference" /><t t-esc="line['product_name']" /></td>
                                            <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                <t t-esc="line['quantity']" />
                                                <t t-if='line["uom"] != "Unit(s)"'>
                                                    <t t-esc='line["uom"]' />
                                                </t>
                                            </td>
                                            <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                <t t-esc='line["price_unit"]' t-options='{"widget": "monetary", "display_currency": currency}' />
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <br />
                                <h6>Payments</h6>
                                <table BORDERCOLOR="#{theme_color or '#000000'}" border="1" cellpadding="0" cellspacing="0" class="table table-sm o_main_table" style="border:0.5px solid #ccc;  border-collapse: collapse; text-transform:capitalize; padding:15px;border-bottom:1px solid #ccc;" width="100%">
                                    <thead>
                                        <tr t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'};">
                                            <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">Name</th>
                                            <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody class="sale_tbody">
                                        <tr t-foreach="payments" t-as="payment">
                                            <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'"><t t-esc="payment['name']" /></td>
                                            <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'"><t t-esc="payment['total']" t-options='{"widget": "monetary", "display_currency": currency}'/></td>
                                        </tr>
                                    </tbody>
                                </table>
                                <br />
                                <h6>Taxes</h6>
                                <table BORDERCOLOR="#{theme_color or '#000000'}" border="1" cellpadding="0" cellspacing="0" class="table table-sm o_main_table" style="border:0.5px solid #ccc;  border-collapse: collapse; text-transform:capitalize; padding:15px;border-bottom:1px solid #ccc;" width="100%">
                                    <thead>
                                        <tr t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'};">
                                            <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">Name</th>
                                            <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody class="sale_tbody">
                                        <tr t-foreach="taxes" t-as="tax">
                                            <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'"><t t-esc="tax['name']" /></td>
                                            <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'"><t t-esc="tax['total']" t-options='{"widget": "monetary", "display_currency": currency}' /></td>
                                        </tr>
                                    </tbody>
                                </table>
                                <br />
                                <br />
                                <strong>Total: <t t-esc="total_paid" t-options='{"widget": "monetary", "display_currency": currency}' /></strong>
                                        </div>
                                    </div>
                                </div>
                </t>
            </t>
        </xpath>
    </template>

</odoo>