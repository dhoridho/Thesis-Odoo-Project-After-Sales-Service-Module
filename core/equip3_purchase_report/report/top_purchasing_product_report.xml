<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="sh_top_purchasing_product_doc" inherit_id="sh_purchase_reports.sh_top_purchasing_product_doc">
        <xpath expr="//t" position="replace">
            <t t-call="web.html_container">
                <t t-call="equip3_purchase_report.purchase_bill_summary_exclusive_external_layout">
                    <t t-set="theme_color" t-value="company_id and company_id.theme_color"/>
                    <t t-set="theme_text_color" t-value="company_id and company_id.theme_text_color"/>
                    <t t-set="company_color" t-value="company_id and company_id.company_color"/>
                    <t t-set="company_address_color" t-value="company_id and company_id.company_address_color"/>
                    <t t-set="customer_color" t-value="company_id and company_id.customer_color"/>
                    <t t-set="customer_address_color" t-value="company_id and company_id.customer_address_color"/>
                    <t t-set="text_color" t-value="company_id and company_id.text_color"/>
                    <div class="page" t-att-style="'font-family:'+company_id.font_id.family+';font-size:'+str(company_id.font_size)+'px;'">
                        <div class="oe_structure"/>
                        <t t-call="equip3_purchase_report.purchase_bill_summary_watermark"/>
                        <br/>
                        <div width="100%">
                            <div  style="padding:0px 20px 20px 20px; margin:0; background:#fff; line-height:20px;" width="100%">
                                <div class="row">
                                    <div class="col-12 mx-auto">
                                        <div class="text-center">
                                            <b>
                                                <h4>Top Purchasing Products</h4>
                                            </b>
                                            <b>
                                                <span t-esc="date_from" />
                                                -
                                                <span t-esc="date_to" />
                                            </b>
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <div align="left"  style="color:#4D4D4F; padding: 0px 0px 15px 0px;" valign="top">
                                    <table border="0" cellpadding="0" cellspacing="0" t-attf-style="color:#fff; text-transform:capitalize; border: 1px solid #{theme_color or '#000000'};" width="100%">
                                        <tr t-attf-style="color: #{theme_text_color or '#000000'}; background-color: #{theme_color or '#000000'};">
                                            <td t-attf-style="padding:9px 15px; font-weight:bold;">
                                                <span>Printed On</span>
                                                <br/>
                                                <span t-esc="print_date"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                        <t t-if="type == 'basic'">
                            <table BORDERCOLOR="#{theme_color or '#000000'}" border="1" cellpadding="0" cellspacing="0" class="table table-sm o_main_table" style="border:0.5px solid #ccc;  border-collapse: collapse; text-transform:capitalize; padding:15px;border-bottom:1px solid #ccc;" width="100%">
                                <thead class="text-center bg-Primary">
                                    <tr t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'};">
                                        <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">
                                            <strong>#</strong>
                                        </th>
                                        <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">
                                            <strong>Product</strong>
                                        </th>
                                        <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">
                                            <strong>Qty Purchased</strong>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody class="sale_tbody">
                                    <t t-foreach="len(products)" t-as="i">
                                        <tr>
                                            <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                <span t-esc="i + 1" />
                                            </td>
                                            <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                <span t-esc="products[i]" />
                                            </td>
                                            <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                <span t-esc="products_qty[i]" />
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                        <t t-if="type == 'compare'">
                            <div class="row">
                                <div class="col-6">
                                    <table BORDERCOLOR="#{theme_color or '#000000'}" border="1" cellpadding="0" cellspacing="0" class="table table-sm o_main_table" style="border:0.5px solid #ccc;  border-collapse: collapse; text-transform:capitalize; padding:15px;border-bottom:1px solid #ccc;" width="100%">
                                        <thead class="text-center bg-Primary">
                                            <tr t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'};">
                                                <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">
                                                    <strong>#</strong>
                                                </th>
                                                <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">
                                                    <strong>Product</strong>
                                                </th>
                                                <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">
                                                    <strong>Qty Purchased</strong>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody class="sale_tbody">
                                            <t t-foreach="len(products)" t-as="i">
                                                <tr>
                                                    <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                        <span t-esc="i + 1" />
                                                    </td>
    
                                                    <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                        <span t-esc="products[i]" />
                                                    </td>
    
                                                    <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                        <span t-esc="products_qty[i]" />
                                                    </td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="col-6">
                                    <table BORDERCOLOR="#{theme_color or '#000000'}" border="1" cellpadding="0" cellspacing="0" class="table table-sm o_main_table" style="border:0.5px solid #ccc;  border-collapse: collapse; text-transform:capitalize; padding:15px;border-bottom:1px solid #ccc;" width="100%">
                                        <thead class="text-center bg-Primary">
                                            <tr t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'};">
                                                <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">
                                                    <strong>#</strong>
                                                </th>
                                                <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">
                                                    <strong>Compare Product</strong>
                                                </th>
                                                <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">
                                                    <strong>Qty Purchased</strong>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody class="sale_tbody">
                                            <t t-foreach="len(compare_products)" t-as="i">
                                                <tr>
                                                    <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                        <span t-esc="i + 1" />
                                                    </td>
    
                                                    <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                        <span t-esc="compare_products[i]" />
                                                    </td>
    
                                                    <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                        <span t-esc="compare_products_qty[i]" />
                                                    </td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <table BORDERCOLOR="#{theme_color or '#000000'}" border="1" cellpadding="0" cellspacing="0" class="table table-sm o_main_table" style="border:0.5px solid #ccc;  border-collapse: collapse; text-transform:capitalize; padding:15px;border-bottom:1px solid #ccc;" width="100%">
                                            <thead>
                                                <tr class="text-center bg-Primary">
                                                    <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">New Products</th>
                                                </tr>
                                            </thead>
                                            <tbody class="sale_tbody">
                                                <t t-foreach="new_products" t-as="np">
                                                    <tr>
                                                        <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                            <span t-esc="np" />
                                                        </td>
                                                    </tr>
                                                </t>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="col-6">
                                        <table BORDERCOLOR="#{theme_color or '#000000'}" border="1" cellpadding="0" cellspacing="0" class="table table-sm o_main_table" style="border:0.5px solid #ccc;  border-collapse: collapse; text-transform:capitalize; padding:15px;border-bottom:1px solid #ccc;" width="100%">
                                            <thead>
                                                <tr class="text-center bg-Primary">
                                                    <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">Lost Products</th>
                                                </tr>
                                            </thead>
                                            <tbody class="sale_tbody">
                                                <t t-foreach="lost_products" t-as="lp">
                                                    <tr>
                                                        <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                            <span t-esc="lp" />
                                                        </td>
                                                    </tr>
                                                </t>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </t>

                    </div>
                </div>
                    </div>
                </t>
            </t>
        </xpath>
    </template>

</odoo>
