<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="sh_vend_po_analysis_doc" inherit_id="sh_purchase_reports.sh_vend_po_analysis_doc">
        <xpath expr="//t" position="replace">
            <t t-call="web.html_container">
                <t t-call="equip3_purchase_report.purchase_bill_summary_exclusive_external_layout">
                    <t t-set="theme_color" t-value="company_id and company_id.theme_color"/>
                    <t t-set="theme_text_color" t-value="company_id and company_id.theme_text_color"/>
                    <t t-set="company_color" t-value="company_id and company_id.company_color"/>
                    <t t-set="company_address_color" t-value="company_id and company_id.company_address_color"/>
                    <t t-set="customer_color" t-value="company_id and company_id.customer_color"/>
                    <t t-set="customer_address_color" t-value="company_id and company_id.customer_address_color"/>
                    <t t-set="text_color" t-value="company_id and company_id.text_color"/>
                    <div class="page" t-att-style="'font-family:'+company_id.font_id.family+';font-size:'+str(company_id.font_size)+'px;'">
                        <div class="oe_structure"/>
                        <t t-call="equip3_purchase_report.purchase_bill_summary_watermark"/>
                        <br/>
                        <div width="100%">
                            <div  style="padding:0px 20px 20px 20px; margin:0; background:#fff; line-height:20px;" width="100%">
                                <div class="row">
                                    <div class="col-12 mx-auto">
                                        <div class="text-center">
                                            <b>
                                                <h4>Vendor Purchase Analysis</h4>
                                            </b>
                                            <b>
                                                <span t-esc="date_start" />
                                                -
                                                <span t-esc="date_end" />
                                            </b>
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <div align="left"  style="color:#4D4D4F; padding: 0px 0px 15px 0px;" valign="top">
                                    <table border="0" cellpadding="0" cellspacing="0" t-attf-style="color:#fff; text-transform:capitalize; border: 1px solid #{theme_color or '#000000'};" width="100%">
                                        <tr t-attf-style="color: #{theme_text_color or '#000000'}; background-color: #{theme_color or '#000000'};">
                                            <td t-attf-style="padding:9px 15px; font-weight:bold;">
                                                <span>Printed On</span>
                                                <br/>
                                                <span t-esc="print_date"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <br />
                                <t t-if="report_by == 'order'">
                                    <t t-if="order_dic_by_orders">
                                        <t t-foreach="order_dic_by_orders.keys()" t-as="vendor">
                    
                                            <b>
                                                <span class="text-left" t-esc="vendor" />
                                            </b>
                                            <t t-set="total_purchase_amount" t-value="0" />
                                            <t t-set="total_amount_paid" t-value="0" />
                                            <t t-set="total_balance" t-value="0" />
                                            <table BORDERCOLOR="#{theme_color or '#000000'}" border="1" cellpadding="0" cellspacing="0" class="table table-sm o_main_table" style="border:0.5px solid #ccc;  border-collapse: collapse; text-transform:capitalize; padding:15px;border-bottom:1px solid #ccc;" width="100%">
                                                <thead>
                                                    <tr t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'};">
                                                        <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">Order Number</th>
                                                        <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">Order Date</th>
                                                        <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">Purchase Representative</th>
                                                        <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">Purchase Amount</th>
                                                        <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">Amount Paid</th>
                                                        <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">Balance</th>
                                                    </tr>
                                                </thead>
                                                <tbody class="sale_tbody">
                                                    <t t-foreach="order_dic_by_orders[vendor]" t-as="order">
                                                        <t t-set="currency" t-value="request.env['res.currency'].sudo().browse(order.get('purchase_currency_id',False))" />
                                                        <tr>
                                                            <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                                <span t-esc="order.get('order_number','')" />
                                                            </td>
                                                            <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                                <span t-esc="order.get('order_date','')" t-options='{"widget": "date"}' />
                                                            </td>
                                                            <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                                <span t-esc="order.get('user','')" />
                                                            </td>
                                                            <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                                <span t-esc="order.get('purchase_amount',0.0)" t-options='{"widget": "monetary", "display_currency": currency}' />
                                                            </td>
                                                            <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                                <span t-esc="order.get('paid_amount',0.0)" t-options='{"widget": "monetary", "display_currency": currency}' />
                                                            </td>
                                                            <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                                <span t-esc="order.get('balance_amount',0.0)" t-options='{"widget": "monetary", "display_currency": currency}' />
                                                            </td>
                                                            <t t-set="total_purchase_amount" t-value="total_purchase_amount + order.get('purchase_amount',0)" />
                                                            <t t-set="total_amount_paid" t-value="total_amount_paid + order.get('paid_amount',0)" />
                                                            <t t-set="total_balance" t-value="total_balance + order.get('balance_amount',0)" />
                                                        </tr>
                                                    </t>
                                                    <tr>
                                                        <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'"></td>
                                                        <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'"></td>
                                                        <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                            <b>Total</b>
                                                        </td>
                                                        <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                            <span t-esc="total_purchase_amount" t-options='{"widget": "monetary", "display_currency": currency}'/>
                                                        </td>
                                                        <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                            <span t-esc="total_amount_paid" t-options='{"widget": "monetary", "display_currency": currency}'/>
                                                        </td>
                                                        <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                            <span t-esc="total_balance" t-options='{"widget": "monetary", "display_currency": currency}'/>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </t>
                                    </t>
                                </t>
                                <t t-if="report_by == 'product'">
                                    <t t-if="order_dic_by_products">
                                        <t t-foreach="order_dic_by_products.keys()" t-as="product">
                                            
                                                <b>
                                                    <span class="text-left" t-esc="product" />
                                                </b>
                                            
                                            <table BORDERCOLOR="#{theme_color or '#000000'}" border="1" cellpadding="0" cellspacing="0" class="table table-sm o_main_table" style="border:0.5px solid #ccc;  border-collapse: collapse; text-transform:capitalize; padding:15px;border-bottom:1px solid #ccc;" width="100%">
                                                <thead>
                                                    <tr t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'};">
                                                        <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">Number</th>
                                                        <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">Date</th>
                                                        <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">Product</th>
                                                        <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">Price</th>
                                                        <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">Quantity</th>
                                                        <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">Tax</th>
                                                        <th style="padding:5px 10px; color: #{theme_text_color or '#000000'}; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">Subtotal</th>
                                                    </tr>
                                                </thead>
                                                <tbody class="sale_tbody">
                                                    <t t-set="total_tax" t-value="0.0" />
                                                    <t t-set="total_subtotal" t-value="0.0" />
                                                    <t t-foreach="order_dic_by_products[product]" t-as="order">
                                                        <t t-set="currency" t-value="request.env['res.currency'].sudo().browse(order.get('purchase_currency_id',False))" />
                                                        <tr>
                                                            <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                                <span t-esc="order.get('order_number','')" />
                                                            </td>
                                                            <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                                <span t-esc="order.get('order_date','')" t-options='{"widget": "date"}' />
                                                            </td>
                                                            <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                                <span t-esc="order.get('product_name','')" />
                                                            </td>
                                                            <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                                <span t-esc="order.get('price',0.0)" t-options='{"widget": "monetary", "display_currency": currency}' />
                                                            </td>
                                                            <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                                <span t-esc="order.get('qty',0.0)" />
                                                            </td>
                                                            <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                                <span t-esc="order.get('tax',0.0)" t-options='{"widget": "monetary", "display_currency": currency}' />
                                                            </td>
                                                            <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                                <span t-esc="order.get('subtotal',0.0)" t-options='{"widget": "monetary", "display_currency": currency}' />
                                                            </td>
                                                        </tr>
                                                        <t t-set="total_tax" t-value="total_tax + order.get('tax',0.0)" />
                                                        <t t-set="total_subtotal" t-value="total_subtotal + order.get('subtotal',0.0)" />
                                                    </t>
                                                    <tr>
                                                        <td style="border:1px solid black;"></td>
                                                        <td style="border:1px solid black;"></td>
                                                        <td style="border:1px solid black;"></td>
                                                        <td style="border:1px solid black;"></td>
                                                        <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                            <b>Total</b>
                                                        </td>
                                                        <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                            <span t-esc="total_tax" t-options='{"widget": "monetary", "display_currency": currency}'/>
                                                        </td>
                                                        <td t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                            <span t-esc="total_subtotal" t-options='{"widget": "monetary", "display_currency": currency}'/>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </t>
                                    </t>
                                </t>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </xpath>
    </template>

</odoo>
