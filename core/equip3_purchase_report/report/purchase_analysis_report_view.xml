<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_purchase_order_report_pivot">
        <field name="name">purchase.request.report.pivot</field>
        <field name="model">purchase.request.report</field>
        <field name="arch" type="xml">
            <pivot string="Purchase Request Report">
                <field name="category_id" type="row"/>
                <field name="department_id" type="col"/>
                <field name="product_qty" type="measure"/>
            </pivot>
        </field>
    </record>

    <record model="ir.ui.view" id="view_purchase_request_report_graph">
        <field name="name">purchase.request.report.graph</field>
        <field name="model">purchase.request.report</field>
        <field name="arch" type="xml">
            <graph string="Purchase Request Statistics" type="line" sample="1" disable_linking="1">
                <field name="department_id" type="col"/>
                <field name="product_qty" type="measure"/>
            </graph>
        </field>
    </record>

    <record model="ir.ui.view" id="view_purchase_order_report_pivot_2">
        <field name="name">purchase.request.report.pivot</field>
        <field name="model">purchase.request.report</field>
        <field name="arch" type="xml">
            <pivot string="Purchase Request Report">
                <field name="category_id" type="row"/>
                <field name="create_date" type="col"/>
                <field name="product_qty" type="measure"/>
            </pivot>
        </field>
    </record>

    <record model="ir.ui.view" id="view_purchase_request_report_graph_2">
        <field name="name">purchase.request.report.graph</field>
        <field name="model">purchase.request.report</field>
        <field name="arch" type="xml">
            <graph string="Purchase Request Statistics" type="line" sample="1" disable_linking="1">
                <field name="create_date" type="col"/>
                <field name="product_qty" type="measure"/>
            </graph>
        </field>
    </record>

     <record id="action_purchase_request_report" model="ir.actions.act_window" >
        <field name="name">Purchase Request Analysis</field>
        <field name="res_model">purchase.request.report</field>
        <field name="view_mode">graph,pivot</field>
         <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'graph', 'view_id': ref('equip3_purchase_report.view_purchase_request_report_graph')}),
                (0, 0, {'view_mode': 'pivot', 'view_id': ref('equip3_purchase_report.view_purchase_order_report_pivot')})]"/>
    </record>

    <record id="action_purchase_request_report_2" model="ir.actions.act_window" >
        <field name="name">Purchase Request Analysis</field>
        <field name="res_model">purchase.request.report</field>
        <field name="view_mode">graph,pivot</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'graph', 'view_id': ref('equip3_purchase_report.view_purchase_request_report_graph_2')}),
                (0, 0, {'view_mode': 'pivot', 'view_id': ref('equip3_purchase_report.view_purchase_order_report_pivot_2')})]"/>
    </record>
    
</odoo>