<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sh_payment_pr_report_doc" inherit_id="sh_purchase_reports.sh_payment_pr_report_doc">
        <xpath expr="//div[hasclass('page')]" position="replace">
            <div class="page">
                <div class="oe_structure" />
                <div class="row">
                    <div class="col-12 mx-auto">
                        <div class="text-center">
                            <b>
                                <h4>Bill Payment Report</h4>
                            </b>
                            <b>
                                <span t-esc="date_start" />
                                To
                                <span t-esc="date_end" />
                            </b>
                        </div>
                    </div>
                </div>

                <br />
                <br />
                <t t-if="user_data_dic">
                    <t t-foreach="user_data_dic.keys()" t-as="user">
                        <center>
                            <b>
                                <span>Purchase Representative :</span>
                                <span t-esc="user" />
                            </b>
                        </center>
                        <table class="table table-sm o_main_table" style="border: 1px solid black;">
                            <thead>
                                <tr style="border: 1px solid black;">
                                    <th style="border: 1px solid black;" t-foreach="columns" t-as="c">
                                        <t t-esc="c" />
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-if="user_data_dic.get(user,False)">
                                    <t t-set="pay_list" t-value="user_data_dic.get(user).get('pay',[])" />
                                    <t t-if="pay_list">
                                        <tr t-foreach="pay_list" t-as="p">
                                            <td t-att-style="p[1].get('style','')" t-foreach="columns" t-as="c">
                                                <t t-if="c in ['Bill','Bill Date','Purchase Representative','Vendor']">
                                                    <span t-esc="p[1].get(c,0)" />
                                                </t>

                                                <t t-if="c not in ['Bill','Bill Date','Purchase Representative','Vendor']">
                                                    <span t-esc="'%.2f'%p[1].get(c,0)" />
                                                </t>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                                <t t-if="user_data_dic.get(user,False)">
                                    <t t-set="grand_total" t-value="user_data_dic.get(user).get('grand_total',{})" />
                                    <t t-if="grand_total">
                                        <tr t-if="grand_total">
                                            <td style="border: 1px solid black;" t-foreach="columns" t-as="c">
                                                <t t-if="c not in ['Bill','Bill Date','Purchase Representative','Vendor']">
                                                    <span t-esc="'%.2f'%grand_total.get(c,0)" />
                                                </t>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>
                    </t>
                </t>
                <!-- grand journal total -->
                <br />
                <br />

                <t t-if="grand_journal_dic">
                    <h3>Payment Method</h3>
                    <table class="table table-sm o_main_table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="columns" t-as="c">
                                <t t-if="c not in ['Bill','Bill Date','Purchase Representative','Vendor','Total']">
                                    <tr t-if="grand_journal_dic.get(c,False)">
                                        <td>
                                            <t t-esc="c" />
                                        </td>
                                        <td>
                                            <span t-esc="'%.2f'%grand_journal_dic.get(c,0.0)" />
                                        </td>
                                    </tr>
                                </t>
                            </t>
                            <tr t-if="grand_journal_dic.get('Total',False)">
                                <td>Total</td>
                                <td>
                                    <span t-esc="'%.2f'%grand_journal_dic.get('Total',0.0)" />
                                </td>
                            </tr>
                            <tr t-if="grand_journal_dic.get('Refund',False)">
                                <td>Refund</td>
                                <td>
                                    <span t-esc="'%.2f'%grand_journal_dic.get('Refund',0.0)" />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </t>
            </div>
        </xpath>
    </template>
</odoo>