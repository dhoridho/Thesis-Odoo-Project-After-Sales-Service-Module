<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="purchase_team_analysis_graph">
        <field name="name">purchase.team.analysis.graph</field>
        <field name="model">purchase.team.analysis</field>
        <field name="arch" type="xml">
            <graph type="bar">
                <field name="user_id" type="col"/>
                <field name="days_to_approve" type="measure"/>
            </graph>
        </field>
    </record>

    <record model="ir.ui.view" id="purchase_team_analysis_pivot">
        <field name="name">purchase.team.analysis.pivot</field>
        <field name="model">purchase.team.analysis</field>
        <field name="arch" type="xml">
            <pivot string="Purchase Team Analysis" disable_linking="True" display_quantity="true" sample="1">
                <field name="user_id" type="row"/>
                <field name="days_to_approve" type="measure"/>
                <field name="purchase_order_duration_to_confirm" type="measure"/>
                <field name="amount_saved_from_cost_savings" type="measure"/>
                <field name="number_of_successful_cost_savings" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="purchase_team_analysis_action" model="ir.actions.act_window">
        <field name="name">Purchase Team Analysis</field>
        <field name="res_model">purchase.team.analysis</field>
        <field name="view_mode">pivot,graph</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'graph', 'view_id': ref('equip3_purchase_report.purchase_team_analysis_graph')}),
                (0, 0, {'view_mode': 'pivot', 'view_id': ref('equip3_purchase_report.purchase_team_analysis_pivot')})]"/>
    </record>

    <menuitem id="menu_purchase_team_analysis" action="purchase_team_analysis_action" parent="purchase.purchase_report" groups="" sequence="100" />
</odoo>