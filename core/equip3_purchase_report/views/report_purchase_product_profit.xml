<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sh_po_product_profit_doc" inherit_id="sh_purchase_reports.sh_po_product_profit_doc">
        <xpath expr="//div[hasclass('page')]" position="replace">
            <div class="page">
                <div class="oe_structure" />
                <div class="row">
                    <div class="col-12 mx-auto">
                        <div class="text-center">
                            <b>
                                <h4>Purchase Product Profit</h4>
                            </b>
                            <b>
                                <span t-esc="date_start" t-options="{'widget': 'datetime'}" />
                                To
                                <span t-esc="date_end" t-options="{'widget': 'datetime'}" />
                            </b>
                        </div>
                    </div>
                </div>
                <br />
                <t t-if="report_by == 'vendor'">
                    <t t-if="order_dic_by_vendors">
                        <t t-foreach="order_dic_by_vendors.keys()" t-as="vendor">
                            <center>
                                <b>
                                    <span t-esc="vendor" />
                                </b>
                            </center>
                            <t t-set="total_cost" t-value="0" />
                            <t t-set="total_purchase_amount" t-value="0" />
                            <t t-set="total_profit" t-value="0" />
                            <t t-set="total_margin" t-value="0" />
                            <table class="table table-sm o_main_table table-bordered" style="table-layout: fixed; border: 1px solid black;" id="">
                                <thead style="display: table-row-group;" class="thead-light">
                                    <tr style="border: 1px solid black;">
                                        <th style="border: 1px solid black;">Order Number</th>
                                        <th style="border: 1px solid black;">Order Date</th>
                                        <th style="border: 1px solid black;">Product</th>
                                        <th style="border: 1px solid black;">Quantity</th>
                                        <th style="border: 1px solid black;">Cost</th>
                                        <th style="border: 1px solid black;">Purchase Price</th>
                                        <th style="border: 1px solid black;">Profit</th>
                                        <th style="border: 1px solid black;">Margin(%)</th>
                                    </tr>
                                </thead>
                                <tbody class="sale_tbody">
                                    <t t-foreach="order_dic_by_vendors[vendor]" t-as="order">
                                        <t t-set="purchase_price" t-value="(order.get('purchase_price',0.0)*order.get('qty',0.0))" />
                                        <t t-set="cost_price" t-value="(order.get('cost',0.0)*order.get('qty',0.0))" />
                                        <t t-set="profit" t-value="(order.get('purchase_price',0.0)*order.get('qty',0.0)) - (order.get('cost',0.0)*order.get('qty',0.0))" />
                                        <tr>
                                            <td style="border: 1px solid black;">
                                                <span t-esc="order.get('order_number','')" />
                                            </td>
                                            <td style="border: 1px solid black;">
                                                <span t-esc="order.get('order_date','')" t-options='{"widget": "date"}' />
                                            </td>
                                            <td style="border: 1px solid black;">
                                                <span t-esc="order.get('product','')" />
                                            </td>
                                            <td style="border: 1px solid black;">
                                                <span t-esc="'%.2f'%(order.get('qty',0.0))" />
                                            </td>
                                            <td style="border: 1px solid black;">
                                                <span t-esc="'%.2f'%(order.get('cost',0.0) * order.get('qty',0.0))" />
                                            </td>
                                            <td style="border: 1px solid black;">
                                                <span t-esc="'%.2f'%(order.get('purchase_price',0.0) * order.get('qty',0.0))" />
                                            </td>
                                            <td style="border: 1px solid black;">
                                                <span t-esc="'%.2f'%((order.get('purchase_price',0.0)*order.get('qty',0.0)) - (order.get('cost',0.0)*order.get('qty',0.0)))" />
                                            </td>
                                            <td style="border: 1px solid black;">
                                                <t t-if="purchase_price > 0">
                                                    <span t-esc="'%.2f'%((profit / purchase_price) * 100)" />
                                                </t>
                                                <t t-else="">
                                                    <span t-esc="0.0" />
                                                </t>
                                            </td>
                                            <t t-set="total_cost" t-value="total_cost + order.get('cost',0.0) * order.get('qty',0.0) " />
                                            <t t-set="total_purchase_amount" t-value="total_purchase_amount + order.get('purchase_price',0.0) * order.get('qty',0.0) " />
                                            <t t-set="total_profit" t-value="total_profit + (order.get('purchase_price',0.0)*order.get('qty',0.0)) - (order.get('cost',0.0)*order.get('qty',0.0))" />
                                            <t t-if="purchase_price > 0">
                                                <t t-set="total_margin" t-value="total_margin + (profit / purchase_price) * 100" />
                                            </t>
                                        </tr>
                                    </t>
                                    <tr>
                                        <td style="border:1px solid black;"></td>
                                        <td style="border:1px solid black;"></td>
                                        <td style="border: 1px solid black;"></td>
                                        <td style="border: 1px solid black;">
                                            <b>Total</b>
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <span t-esc="'%.2f'%(total_cost)" />
                                        </td>
                                        <td style="border: 1px solid black;">
