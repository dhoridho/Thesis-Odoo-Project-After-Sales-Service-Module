<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="kitchen_flow_wizard_view_form" model="ir.ui.view">
        <field name="name">kitchen_flow_wizard.view.form</field>
        <field name="model">kitchen.flow.wizard</field>
        <field name="arch" type="xml">
            <form string="Central Kitchen Flow">
                <script>
                    $(".o_control_panel").remove();
                </script>
                <style>
                    .no-bd {
                        background-color: transparent;
                        border: none;
                        outline: none;
                    }
                </style>
                <sheet>
                    <h1>Central Kitchen Flow</h1>
                    <br/><br/><br/><br/><br/><br/>
                    <div class="container">
                        <div class="row">
                            <div class="col-1 m-1 p-1 text-center">
                                <button name="button_product" type="object" class="btn btn-light no-bd" width="95" height="100">
                                    <img src="/equip3_kitchen_reports/static/img/products.svg" width="40"/>
                                    <br/>
                                    Product
                                </button>
                            </div>
                            <div class="col-1 m-1 p-1 text-center"></div>
                            <div class="col-1 m-1 p-1 text-center"></div>
                            <div class="col-1 m-1 p-1 text-center"></div>
                            <div class="col-1 m-1 p-1 text-center"></div>
                            <div class="col-1 m-auto p-auto text-center"></div>
                            <div class="col-1 m-1 p-1 text-center"></div>
                            <div class="col-1 m-1 p-1 text-center"></div>
                            <div class="col-1 m-1 p-1 text-center">
                                <button name="button_finished_product_report" type="object" class="btn btn-light no-bd" width="95" height="100">
                                    <img src="/equip3_kitchen_reports/static/img/reporting.svg" width="40"/>
                                    <br/>
                                    Finished Product report
                                </button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-1 m-1 p-1 text-center"></div>
                            <div class="col-1 m-1 p-1 text-center">
                                <button name="button_outlet" type="object" class="btn btn-light no-bd" width="95" height="100">
                                    <img src="/equip3_kitchen_reports/static/img/Outlet-Order.svg" width="40"/>
                                    <br/>
                                    Outlet Order
                                </button>
                            </div>
                            <div class="col-1 m-auto p-1 text-center">
                                <button name="button_bom" type="object" class="p-0" disabled="disabled">
                                    <i class="fa fa-arrow-right" style="font-size:4rem;"/>
                                </button>
                            </div>
                            <div class="col-1 m-1 p-1 text-center">
                                <button name="button_cooking_list" type="object" class="btn btn-light no-bd" width="95" height="100">
                                    <img src="/equip3_kitchen_reports/static/img/operations.svg" width="40"/>
                                    <br/>
                                    Cooking List
                                </button>
                            </div>
                            <div class="col-1 m-auto p-1 text-center">
                                <button name="button_bom" type="object" class="p-0" disabled="disabled">
                                    <i class="fa fa-arrow-right" style="font-size:4rem;"/>
                                </button>
                            </div>
                            <div class="col-1 m-1 p-1 text-center">
                                <button name="button_dashboard" type="object" class="btn btn-light no-bd" width="90" height="100">
                                    <img src="/equip3_kitchen_reports/static/img/dashboard.svg" width="40"/>
                                    <br/>
                                    Dashboard
                                </button>
                            </div>
                            <div class="col-1 m-auto p-1 text-center">
                                <button name="button_bom" type="object" class="p-0" disabled="disabled">
                                    <i class="fa fa-arrow-right" style="font-size:4rem;"/>
                                </button>
                            </div>
                            <div class="col-1 m-1 p-1 text-center">
                                <button name="button_kitchen_product_record" type="object" class="btn btn-light no-bd" width="95" height="100">
                                    <img src="/equip3_kitchen_reports/static/img/operations.svg" width="40"/>
                                    <br/>
                                    Kitchen Product Record
                                </button>
                            </div>
                            <div class="col-1 m-1 p-1 text-center"></div>
                        </div>
                        <div class="row">
                            <div class="col-1 m-1 p-1 text-center">
                                <button name="button_bom" type="object" class="btn btn-light no-bd" width="95" height="100">
                                    <img src="/equip3_kitchen_reports/static/img/BoM.svg" width="40"/>
                                    <br/>
                                    Bill Of Materials
                                </button>
                            </div>
                            <div class="col-1 m-1 p-1 text-center"></div>
                            <div class="col-1 m-1 p-1 text-center"></div>
                            <div class="col-1 m-1 p-1 text-center"></div>
                            <div class="col-1 m-1 p-1 text-center"></div>
                            <div class="col-1 m-auto p-auto text-center">
                                <button name="button_bom" type="object" class="p-0" disabled="disabled">
                                    <i class="fa fa-arrow-up" style="font-size:4rem;"/>
                                </button>
                            </div>
                            <div class="col-1 m-1 p-1 text-center"></div>
                            <div class="col-1 m-1 p-1 text-center">
                                <button name="button_material_consumed_report" type="object" class="btn btn-light no-bd" width="95" height="100">
                                    <img src="/equip3_kitchen_reports/static/img/reporting.svg" width="40"/>
                                    <br/>
                                    Material Consumed Report
                                </button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-1 m-1 p-1 text-center"></div>
                            <div class="col-1 m-1 p-1 text-center"></div>
                            <div class="col-1 m-1 p-1 text-center"></div>
                            <div class="col-1 m-1 p-1 text-center"></div>
                            <div class="col-1 m-1 p-1 text-center"></div>
                            <div class="col-1 m-auto p-1 text-center">
                                <button name="button_safety_stock" type="object" class="btn btn-light no-bd" width="95" height="100">
                                    <img src="/equip3_kitchen_reports/static/img/Safety-Stock-Management.svg" width="40"/>
                                    <br/>
                                    Safety Stock
                                </button>
                            </div>
                            <div class="col-1 m-1 p-1 text-center"></div>
                            <div class="col-1 m-1 p-1 text-center"></div>
                        </div>
                    </div>   
                </sheet>
            </form>
        </field>
    </record>

    <record id="kitchen_flow_wizard_action" model="ir.actions.act_window">
        <field name="name">Central Kitchen Configuration Flow </field>
        <field name="res_model">kitchen.flow.wizard</field>
        <field name="view_mode">form</field>
    </record>

    <menuitem
        id="Kitchen_flow_wizard_menu"
        name="Central Kitchen Flow"
        action="kitchen_flow_wizard_action"
        parent="equip3_kitchen_accessright_settings.menu_kitchen_root"
        sequence="2"/>

</odoo>
