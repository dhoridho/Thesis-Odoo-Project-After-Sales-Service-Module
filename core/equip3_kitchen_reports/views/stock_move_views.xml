<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_material_consumed_pivot" model="ir.ui.view">
		<field name="name">view.material.consumed.pivot</field>
		<field name="model">stock.move</field>
		<field name="arch" type="xml">
			<pivot string="Material Consumed" js_class="kitchen_pivot"/>
		</field>
	</record>

	<record id="action_view_material_consumed_kitchen" model="ir.actions.act_window">
		<field name="name">Material Consumed</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">stock.move</field>
		<field name="view_mode">pivot</field>
		<field name="view_id" ref="view_material_consumed_pivot"/>
		<field name="domain">[('kitchen_component_id', '!=', False), ('state', '=', 'done')]</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_empty_folder">
				No data to display
			</p>
			<p>
				Try to add some records, or make sure that there is no active filter in the search bar.
			</p>
		</field>
	</record>

</odoo>