<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_kitchen_production_record" model="ir.actions.client">
        <field name="name">kitchen Production &amp; Cost</field>
        <field name="tag">kitchen_production_record_report</field>
        <field name="context" eval="{'model': 'report.equip3_kitchen_reports.report_kitchen_production'}" />
    </record>

    <record model="ir.ui.view" id="view_kitchen_production_record_inherited">
        <field name="name">kitchen.production.record.inherit</field>
        <field name="model">kitchen.production.record</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="equip3_kitchen_operations.view_kitchen_production_record_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_get_account_moves']" position="after">
                <button name="%(action_report_kitchen_production_record)d" type="action" class="oe_stat_button" icon="fa-bars" string="Cost Details" attrs="{'invisible': [('state', '=', 'draft')]}"/>
            </xpath>

            <xpath expr="//field[@name='move_raw_ids']/tree/field[@name='state']" position="replace">
                <field name="state" widget="badge" 
                    decoration-muted="state == 'draft'" 
                    decoration-danger3="state == 'cancel'"
                    decoration-success2="state == 'assigned'"
                    decoration-primary="state == 'confirmed'"
                    decoration-success="state == 'done'" 
                    />
            </xpath>
        </field>
    </record>


</odoo>