<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_finished_product_pivot" model="ir.ui.view">
        <field name="name">view.finished.product.pivot</field>
        <field name="model">kitchen.production.record</field>
        <field name="arch" type="xml">
            <pivot string="Finished Product" js_class="kitchen_pivot"/>
        </field>
    </record>

	<record id="action_view_finished_product_kitchen" model="ir.actions.act_window">
		<field name="name">Finished Product</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">kitchen.production.record</field>
		<field name="view_mode">pivot</field>
		<field name="view_id" ref="view_finished_product_pivot"/>
		<field name="domain">[('state', '=', 'confirm')]</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_empty_folder">
				No data to display
			</p>
			<p>
				Try to add some records, or make sure that there is no active filter in the search bar.
			</p>
		</field>
	</record>

</odoo>