<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="rental_flow_wizard_view_form" model="ir.ui.view">
        <field name="name">rental.flow.wizard.view.form</field>
        <field name="model">rental.flow.wizard</field>
        <field name="arch" type="xml">
            <form string="Rental Configuration Flow">
                <script>
                    $(".o_control_panel").remove();
                </script>
                <sheet>
                    <h1>Rental Flow</h1>
                    <div class="container">
                        <br/>
                        <br/>
                        <div class="row">
                            <div class="col-1 offset-2 m-0 p-0 text-center">
                                <button name="button_customer" type="object" class="btn btn-secondary" width="90" height="90">
                                    <img src="/equip3_rental_configuration_flow/static/img/user-groups-96.svg" width="40"/>
                                    <br/>
                                    Customer
                                </button>
                            </div> 
                        </div>
                        <br/>
                        <br/>
                        <div class="row">
                            <div class="col-1 offset-2 m-0 p-0 text-center">
                                <button name="button_rental_product" type="object" class="btn btn-secondary" width="90" height="90">
                                    <img src="/equip3_rental_configuration_flow/static/img/shipping-product-96.svg" width="40"/>
                                    <br/>
                                    Rental Product
                                </button>
                            </div>
                            <div class="col"></div>
                            <div class="col m-0 p-0 text-center">
                                <button name="button_product_availability" type="object" class="btn btn-secondary" width="90" height="90">
                                    <img src="/equip3_rental_configuration_flow/static/img/delivered-box-96.svg" width="40"/>
                                    <br/>
                                    Product Availability
                                </button>
                            </div>
                            <div class="col m-0 my-auto p-0 text-center">
                                <i class="fa fa-arrow-right" style="font-size:4rem;"/>
                            </div>
                            <div class="col m-0 p-0 text-center">
                                <button name="button_rental_orders" type="object" class="btn btn-secondary" width="90" height="90">
                                    <img src="/equip3_rental_configuration_flow/static/img/pay-date-96.svg" width="40"/>
                                    <br/>
                                    Rental Orders
                                </button>
                            </div>
                            <div class="col m-0 my-auto p-0 text-center">
                                <i class="fa fa-arrow-right" style="font-size:4rem;"/>
                            </div>
                            <div class="col m-0 p-0 text-center">
                                <button name="button_delivery_order" type="object" class="btn btn-secondary" width="90" height="90">
                                    <img src="/equip3_rental_configuration_flow/static/img/delivery-96.svg" width="40"/>
                                    <br/>
                                    Delivery Order
                                </button>
                            </div>
                            <div class="col m-0 my-auto p-0 text-center">
                                <i class="fa fa-arrow-right" style="font-size:4rem;"/>
                            </div>
                            <div class="col m-0 p-0 text-center">
                                <button name="button_return" type="object" class="btn btn-secondary" width="90" height="90">
                                    <img src="/equip3_rental_configuration_flow/static/img/overstock-sale-96.svg" width="40"/>
                                    <br/>
                                    Return
                                </button>
                            </div>
                            <div class="col m-0 my-auto p-0 text-center">
                                <i class="fa fa-arrow-right" style="font-size:4rem;"/>
                            </div>
                            <div class="col m-0 p-0 text-center">
                                <button name="button_invoice" type="object" class="btn btn-secondary" width="90" height="90">
                                    <img src="/equip3_rental_configuration_flow/static/img/invoice-96.svg" width="40"/>
                                    <br/>
                                    Invoice
                                </button>
                            </div>
                            <div class="col"></div>
                            <div class="col m-0 p-0 text-center">
                                <button name="button_reporting" type="object" class="btn btn-secondary" width="90" height="90">
                                    <img src="/equip3_rental_configuration_flow/static/img/graph-96.svg" width="40"/>
                                    <br/>
                                    Reporting
                                </button>
                            </div>
                        </div>
                        <br/>
                        <br/>
                        <div class="row">
                            <div class="col-1 offset-2 m-0 p-0 text-center">
                                <button name="button_checklist_item" type="object" class="btn btn-secondary" width="90" height="90">
                                    <img src="/equip3_rental_configuration_flow/static/img/checklist-96.svg" width="40"/>
                                    <br/>
                                    Checklist Item
                                </button>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record> 

    <record id="rental_configuration_flow_action" model="ir.actions.act_window">
        <field name="name">rental.configuration.flow.action</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">rental.flow.wizard</field>
        <field name="view_mode">form</field>
    </record>

    <record id="rental_configuration_flow_action_client" model="ir.actions.client">
        <field name="name">Rental Flow</field>
        <field name="tag">rental_configuration_flow_tag</field>
    </record>

    <menuitem
        id="rental_configuration_flow_menu"
        name="Rental Flow"
        action="rental_configuration_flow_action_client"
        parent="equip3_rental_masterdata.menu_rental_root"
        sequence="1"/>
    
    <record id="equip3_rental_configuration_flow.rental_configuration_flow_menu" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-main-flow</field>
    </record>

</odoo>
