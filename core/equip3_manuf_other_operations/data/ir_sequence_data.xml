<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Sequences for Finished Goods Simulation -->
        <record id="seq_finished_good_simulation" model="ir.sequence">
            <field name="name">Finished Good Simulation</field>
            <field name="code">finished.good.simulation</field>
            <field name="prefix">FGS/%(y)s/%(month)s/%(day)s/</field>
            <field name="padding">3</field>
            <field name="use_date_range" eval="True"/>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Sequences for MPS Production -->
        <record model="ir.sequence" id="seq_mps_production">
            <field name="name">MPS Production</field>
            <field name="code">equip.mps.production</field>
            <field name="prefix">MPS/%(y)s/%(month)s/%(day)s/</field>
            <field name="padding">3</field>
            <field name="use_date_range" eval="True"/>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Sequences for MRP MPS -->
        <record model="ir.sequence" id="seq_mrp_mps">
            <field name="name">MRP MPS</field>
            <field name="code">mrp.mps</field>
            <field name="prefix">MPS/%(y)s/%(month)s/%(day)s/</field>
            <field name="padding">3</field>
            <field name="use_date_range" eval="True"/>
            <field name="company_id" eval="False"/>
        </record>

    </data>
</odoo>
