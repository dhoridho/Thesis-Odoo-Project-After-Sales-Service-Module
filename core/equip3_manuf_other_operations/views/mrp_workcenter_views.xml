<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_mrp_workcenter_form" model="ir.ui.view">
        <field name="name">view.mrp.workcenter.form</field>
        <field name="model">mrp.workcenter</field>
        <field name="inherit_id" ref="equip3_manuf_operations.view_mrp_workcenter_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="attributes">
                <attribute name="class">o_workcenter_form</attribute>
            </xpath>
            <xpath expr="//page[@name='general_info']" position="after">
                <page name="routing_lines" string="Cycle Time">
                    <field name="routing_line_ids" readonly="1">
                        <tree string="Cycle Time">
                            <field name="bom_id" string="BoM Name"/>
                            <field name="bom_product_tmpl_id" string="Product"/>
                            <field name="max_production" class="text-left"/>
                            <field name="time_cycle_manual" widget="float_time_hms" string="Cycle Time"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>