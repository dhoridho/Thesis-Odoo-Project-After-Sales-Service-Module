<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="equip3_mrp_mps_production_schedule_form_view" model="ir.ui.view" >
        <field name="name">equip.mrp.production.schedule.form.view</field>
        <field name="model">equip.mrp.production.schedule</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="product_id" attrs="{'readonly': [('id', '!=', False)]}"/>
                        <field name="warehouse_id" readonly="context.get('default_warehouse_id', False)" force_save="1"/>
                    </group>
                    <group invisible="1">
                        <field name="company_id"/>
                        <field name="bom_id"/>
                    </group>
                </group>
                <footer>
                    <button special="save" type="object" string="Save" class="btn-primary"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="equip3_mrp_mps_search_view" model="ir.ui.view" >
        <field name="name">equip.mrp.production.schedule.search.view</field>
        <field name="model">equip.mrp.production.schedule</field>
        <field name="arch" type="xml">
          <search>
                <field name="product_id" string="Product Variant"/>
                <field name="product_tmpl_id" string="Product"/>
                <field name="product_uom_id"/>
                <field name="bom_ids"/>

                <!-- filter -->
                <filter string="Min Stock" name="any_low_stock" domain="[('any_low_stock', '=', True)]"/>
                <filter string="Max Stock" name="any_max_stock" domain="[('any_max_stock', '=', True)]"/>
                <filter string="On Hand" name="any_on_hand_qty" domain="[('any_on_hand_qty', '=', True)]"/>
                <filter string="Sales" name="any_sales" domain="[('any_sales', '=', True)]"/>
                <filter string="Forecasted Demand" name="any_forcasted_demand" domain="[('any_forecasted_demand', '=', True)]"/>
                <filter string="Forecasted Stock" name="any_forcasted_stock" domain="[('any_forecasted_stock', '=', True)]"/>
                <filter string="To Produce" name="any_to_replenish_qty" domain="[('any_to_replenish_qty', '=', True)]"/>
          </search>
        </field>
    </record>

    <record id="equip3_action_mrp_mps" model="ir.actions.client">
        <field name="name">Master Production Schedule</field>
        <field name="res_model">equip.mrp.production.schedule</field>
        <field name="tag">equip3_mrp_mps_client_action</field>
    </record>

    <record id="equip3_action_mrp_mps_wizard" model="ir.actions.client">
        <field name="name">Reproduce</field>
        <field name="res_model">equip.mrp.production.schedule</field>
        <field name="tag">equip3_mrp_mps_action_replenish</field>
        <field name="target">new</field>
    </record>

    <record id="equip3_action_mrp_mps_form_view" model="ir.actions.act_window">
        <field name="name">Add a Product</field>
        <field name="res_model">equip.mrp.production.schedule</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="equip3_mrp_mps_production_schedule_form_view"/>
    </record>

</odoo>