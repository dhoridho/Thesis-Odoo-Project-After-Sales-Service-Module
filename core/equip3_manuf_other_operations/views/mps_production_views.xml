<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_mps_production_tree" model="ir.ui.view">
         <field name="name">view.mps.production.tree</field>
         <field name="model">equip.mps.production</field>
         <field name="arch" type="xml">
             <tree string="MPS Production">
                 <field name="name"/>
                 <field name="date"/>
             </tree>
         </field>
    </record>

    <record id="view_mps_production_form" model="ir.ui.view">
         <field name="name">view.mps.production.form</field>
         <field name="model">equip.mps.production</field>
         <field name="arch" type="xml">
             <form string="MPS Production">
                 <sheet>
                     <div class="oe_title">
                        <h1>
                            <field name="name" nolabel="1" readonly="1"/>
                        </h1>
                    </div>
                     <group>
                         <group>
                             <field name="date"/>
                         </group>
                     </group>
                     <notebook>
                         <page string="Production Plan" attrs="{'invisible': [('plan_ids', 'in', (False, []))]}">
                             <field name="plan_ids">
                                 <tree string="Production Plan">
                                     <field name="mps_production_id" invisible="1"/>
                                     <field name="plan_id" string="Reference"/>
                                     <field name="mps_start_date" string="Start Date"/>
                                     <field name="mps_end_date" string="End Date"/>
                                     <field name="mps_product_id" string="Product"/>
                                     <field name="mps_bom_id" string="Bill of Materials"/>
                                     <field name="mps_product_qty" string="Produced"/>
                                 </tree>
                             </field>
                         </page>
                         <page string="Production Order">
                             <field name="production_ids">
                                 <tree string="Production Order">
                                     <field name="mps_production_id" invisible="1"/>
                                     <field name="name" string="Reference"/>
                                     <field name="mps_start_date" string="Start Date"/>
                                     <field name="mps_end_date" string="End Date"/>
                                     <field name="product_id" string="Product"/>
                                     <field name="bom_id" string="Bill of Materials"/>
                                     <field name="product_qty" string="To Produce"/>
                                     <field name="state" invisible="1"/>
                                 </tree>
                             </field>
                         </page>
                     </notebook>
                 </sheet>
             </form>
         </field>
    </record>

</odoo>