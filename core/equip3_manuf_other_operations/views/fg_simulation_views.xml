<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_finished_good_simulation_tree" model="ir.ui.view">
        <field name="name">view.finished.good.simulation.tree</field>
        <field name="model">finished.good.simulation</field>
        <field name="arch" type="xml">
            <tree string="Finished Goods Simulation" default_order="create_date desc">
                <field name="name" string="Finished Goods Simulation"/>
                <field name="description"/>
                <field name="create_date"/>
                <field name="state" widget="badge" decoration-success="state == 'simulated'" decoration-info="state == 'draft'"/>
            </tree>
        </field>
    </record>

    <record id="view_finished_good_simulation_form" model="ir.ui.view">
        <field name="name">view.finished.good.simulation.form</field>
        <field name="model">finished.good.simulation</field>
        <field name="arch" type="xml">
            <form string="Finished Goods Simulation">
                <header>
                    <button name="action_simulate" string="Simulate" class="oe_highlight" type="object"/>
                    <button name="action_create_mrp_plan" string="Create Production Plan" class="oe_highlight" type="object" attrs="{'invisible': [('active_any', '=', False)]}"/>
                    <button name="action_create_mrp_production" string="Create Production Order" class="oe_highlight" type="object" attrs="{'invisible': [('active_any', '=', False)]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_mrp" type="object" class="oe_stat_button" icon="o-hm-smart-all-manufacturing-plan" attrs="{'invisible': [('mrp_plan_count', '=', 0)]}" context="{'model': 'mrp.plan'}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="mrp_plan_count" widget="statinfo" nolabel="1"/></span>
                                <span class="o_stat_text">Manufacturing<br/>Plan</span>
                            </div>
                        </button>
                        <button name="action_view_mrp" type="object" class="oe_stat_button" icon="o-hm-smart-all-manufacturing" attrs="{'invisible': [('mrp_production_count', '=', 0)]}" context="{'model': 'mrp.production'}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="mrp_production_count" widget="statinfo" nolabel="1"/></span>
                                <span class="o_stat_text">Manufacturing<br/>Order</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
						<h1>
                            <field name="name"/>
                        </h1>
					</div>
                    <group>
                        <group>
                            <field name="description"/>
                            <field name="based_on" widget="radio"/>
                            <field name="warehouse_id"/>
                            <field name="location_ids" widget="many2many_tags" required="1"/>
                            <field name="mrp_plan_count" invisible="1"/>
                            <field name="mrp_production_count" invisible="1"/>
                            <field name="active_any" invisible="1"/>
                            <field name="active_all" invisible="1"/>
                            <field name="is_simulated" invisible="1"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                            <field name="is_branch_required" invisible="1"/>
                            <field name="branch_id" attrs="{'required': [('is_branch_required', '=', True)]}" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="create_date"/>
                            <field name="create_uid" force_save="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Finished Goods" name="finished_goods">
                            <field name="finished_line_ids">
                                <tree string="Finished Goods" editable="bottom">
                                    <field name="active_for_create" string=" "/>
                                    <field name="sequence" widget="handle"/>
                                    <field name="simulation_id" invisible="1"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="branch_id" invisible="1"/>
                                    <field name="product_id" options="{'no_create': True, 'no_create_edit': True}"/>
                                    <field name="bom_id" options="{'no_create': True, 'no_create_edit': True}"/>
                                    <field name="allowed_bom_ids" invisible="1"/>
                                    <field name="estimated_qty" readonly="1" force_save="1"/>
                                    <field name="uom_id" string="UoM" groups="uom.group_uom"/>
                                    <field name="bom_data" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <notebook>
                        <page string="Materials" name="materials">
                            <field name="material_line_ids" readonly="1" force_save="1">
                                <tree string="Materials">
                                    <field name="product_id"/>
                                    <field name="warehouse_id" optional="hide"/>
                                    <field name="location_ids" widget="many2many_tags" optional="hide"/>
                                    <field name="qty_available"/>
                                    <field name="free_qty"/>
                                    <field name="virtual_available"/>
                                    <field name="leftover_qty"/>
                                    <field name="uom_id" string="UoM" groups="uom.group_uom"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_view_finished_good_simulation" model="ir.actions.act_window">
        <field name="name">Finished Good Simulation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">finished.good.simulation</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
           Create a new Finished Goods Simulation
          </p>
        </field>
    </record>

</odoo>