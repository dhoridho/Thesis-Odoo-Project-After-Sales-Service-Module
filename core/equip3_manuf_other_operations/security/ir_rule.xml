<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- finished.good.simulation -->
        <record id="finished_good_simulation_multi_company_rule" model="ir.rule">
            <field name="name">Finished Good Simulation Multi-Company</field>
            <field name="model_id" ref="model_finished_good_simulation"/>
            <field name="domain_force">[
                '|', 
                    ('company_id', '=', False), 
                    ('company_id', 'in', company_ids)
            ]</field>
        </record>

        <record id="finished_good_simulation_multi_branch_rule" model="ir.rule">
            <field name="name">Finished Good Simulation Multi-Branch</field>
            <field name="model_id" ref="model_finished_good_simulation"/>
            <field name="domain_force">[
                '|', 
                    ('branch_id', '=', False), 
                    ('branch_id', 'in', branch_ids)
            ]</field>
        </record>
        
    </data>
</odoo>