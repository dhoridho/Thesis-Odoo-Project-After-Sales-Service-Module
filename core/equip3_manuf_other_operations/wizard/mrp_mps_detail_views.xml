<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_mrp_mps_detail_form" model="ir.ui.view">
        <field name="name">view.mrp.mps.detail.form</field>
        <field name="model">mrp.mps.detail</field>
        <field name="arch" type="xml">
            <form string="Master Production Schedule" js_class="mps_detail">
                <sheet>
                    <group>
                        <group>
                            <field name="period" widget="mps_period"/>
                            <field name="product_id" readonly="1" force_save="1"/>
                            <field name="bom_id" required="1"/>
                            <label for="to_produce"/>
                            <div class="o_row">
                                <field name="to_produce" class="oe_inline" readonly="1" force_save="1"/>
                                <field name="bom_uom_id" class="oe_inline"/>
                            </div>
                        </group>
                        <group>
                            <field name="expected_duration" widget="float_time_hms" readonly="1" force_save="1"/>
                            <field name="expected_end_date" readonly="1" force_save="1"/>
                            <label for="suggested_start_date" string="Suggested Date"/>
                            <div class="oe_inline">
                                <field name="suggested_start_date" class="mr8 oe_inline" readonly="1" force_save="1"/>
                                <strong class="mr8 oe_inline">to</strong>
                                <field name="suggested_end_date" class="oe_inline" readonly="1" force_save="1"/>
                            </div>
                            <label for="estimated_start_date" string="Estimated Date"/>
                            <div class="oe_inline">
                                <field name="estimated_start_date" class="mr8 oe_inline" readonly="1" force_save="1"/>
                                <strong class="mr8 oe_inline">to</strong>
                                <field name="estimated_end_date" class="oe_inline" readonly="1" force_save="1"/>
                            </div>
                        </group>
                    </group>

                    <div class="o_mps_chart_container">
                        <canvas id="o_mps_line_chart" height="250px"/>
                    </div>

                    <notebook>
                        <page name="materials" string="Material">
                            <field name="material_ids">
                                <tree string="Materials" editable="bottom" delete="0" create="0">
                                    <field name="detail_id" invisible="1"/>
                                    <field name="bom_line_id" invisible="1"/>
                                    <field name="product_id"/>
                                    <field name="warehouse_id" optional="hide"/>
                                    <field name="to_consume_qty"/>
                                    <field name="qty_available"/>
                                    <field name="incoming_qty"/>
                                    <field name="outgoing_qty"/>
                                    <field name="virtual_available" optional="hide"/>
                                    <field name="free_qty"/>
                                    <field name="needs_qty"/>
                                    <field name="to_purchase_qty"/>
                                    <field name="uom_id"/>
                                </tree>
                            </field>
                        </page>
                        <page name="miscellaneous" string="Miscellaneous" invisible="1">
                            <group>
                                <group>
                                    <field name="mps_id"/>
                                    <field name="company_id"/>
                                    <field name="warehouse_id"/>
                                    <field name="forecasted_data"/>
                                </group>
                                <group>
                                    <field name="workcenter_ids" widget="many2many_tags"/>
                                    <field name="resource_id"/>
                                    <field name="date_from"/>
                                    <field name="date_to"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>