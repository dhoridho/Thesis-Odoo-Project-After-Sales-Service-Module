<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="0">
    <record id="izi_marketplace.action_window_mp_product_view_per_marketplace" model="ir.actions.act_window">
      <field name="name">Marketplace Product(s)</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">mp.product</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>

    <record id="izi_marketplace.action_window_mp_product_variant_view_per_mp_product" model="ir.actions.act_window">
      <field name="name">Marketplace Product Variant(s)</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">mp.product.variant</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record id="izi_marketplace.action_window_mp_map_product_line" model="ir.actions.act_window">
      <field name="name">Marketplace Map Product Line</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">mp.map.product.line</field>
      <field name="view_mode">tree</field>
      <field name="context">{
        'create': False
      }</field>
    </record>

    <record id="izi_marketplace.action_window_mp_bank_statement_view_per_marketplace" model="ir.actions.act_window">
      <field name="name">Marketplace Bank Statement</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">account.bank.statement</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record id="izi_marketplace.action_window_mp_order_per_marketplace" model="ir.actions.act_window">
      <field name="name">Marketplace Orders</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">sale.order</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record id="izi_marketplace.action_window_mp_return_per_marketplace" model="ir.actions.act_window">
      <field name="name">Marketplace Return/Refund</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">mp.return</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record id="izi_marketplace.action_window_mp_promotion_per_marketplace" model="ir.actions.act_window">
      <field name="name">Marketplace Promotion Program</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">mp.promotion.program</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record id="izi_marketplace.action_window_mp_log_error" model="ir.actions.act_window">
      <field name="name">Marketplace Log Error</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">mp.log.error</field>
      <field name="view_mode">tree</field>
      <field name="context">{
        'create': False
      }</field>
    </record>

    <record id="izi_marketplace.action_window_mp_statement_line" model="ir.actions.act_window">
      <field name="name">MP Account Bank Statement Line</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">mp.statement.line</field>
      <field name="view_mode">tree</field>
      <field name="context">{
        'create': False,
        'search_default_group_by_mp_invoice_number': 1
      }</field>
    </record>

    <record id="izi_marketplace.action_window_wiz_mp_order" model="ir.actions.act_window">
      <field name="name">Get Order Wizard</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">wiz.mp.order</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
    </record>
    <record id="izi_marketplace.action_window_wiz_mp_order_wallet" model="ir.actions.act_window">
      <field name="name">Get Order Wallet Wizard</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">wiz.mp.order.wallet</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
    </record>
    <record id="izi_marketplace.action_window_wiz_mp_order_return" model="ir.actions.act_window">
      <field name="name">Get Order Return Wizard</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">wiz.mp.order.return</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
    </record>
    <record id="izi_marketplace.action_window_wiz_mp_webhook_order" model="ir.actions.act_window">
      <field name="name">Get Webhook Order Wizard</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">wiz.mp.webhook.order</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
    </record>
    <record id="izi_marketplace.action_window_wiz_mp_promotion" model="ir.actions.act_window">
      <field name="name">Get MP Promotion Wizard</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">wiz.mp.promotion</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
    </record>
    <record id="izi_marketplace.action_windows_product_template" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('is_marketplace', '=', True)]</field>
        <field name="context">{"search_default_is_marketplace":1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new product
            </p><p>
                You must define a product for everything you sell or purchase,
                whether it's a storable product, a consumable or a service.
            </p>
        </field>
    </record>
    <record id="izi_marketplace.action_window_mp_order_by_marketplace" model="ir.actions.act_window">
      <field name="name">Marketplace Orders</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">sale.order</field>
      <field name="view_mode">tree,form</field>
      <field name="domain">[('mp_account_id', '!=', False)]</field>
      <field name="context">{
        'create': False,
      }</field>
    </record>
  </data>
</odoo>
