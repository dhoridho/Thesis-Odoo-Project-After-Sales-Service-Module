<odoo>
    <record id="izi_marketplace.form_wiz_mp_order_return" model="ir.ui.view">
        <field name="name">Wizard Marketplace Order Return Form View</field>
        <field name="model">wiz.mp.order.return</field>
        <field name="arch" type="xml">
            <form string="Wizard Marketplace Order Return">
                <field name="mp_account_id" invisible="1"/>
                <field name="marketplace" invisible="1"/>
                <group name='mp_get_order'>
                    <field name="params"/>
                    <field name="use_interval" attrs="{'invisible': [('params', '!=', 'by_date_range')]}"/>
                    <field name="mp_return_number" attrs="{'invisible': [('params', '!=', 'by_mp_return_number')],
                        'required': [('params', '=', 'by_mp_return_number')]}"/>
                </group>
                <group attrs="{'invisible': [('params', '!=', 'by_date_range')]}">
                    <group>
                        <field name="interval" attrs="{'invisible': [('use_interval', '=', False)]}"/>
                        <field name="from_date" attrs="{'required': [('params', '=', 'by_date_range')]}"/>
                    </group>
                    <group>
                        <field name="interval_type" attrs="{'invisible': [('use_interval', '=', False)]}"/>
                        <field name="to_date" attrs="{'required': [('params', '=', 'by_date_range')]}"/>
                    </group>
                </group>
                <footer>
                    <button name="get_return" string="Get Return" type="object" class="btn-primary" context="{'close_notifications_and_wizard': True}"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>