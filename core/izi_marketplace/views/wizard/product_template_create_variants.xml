<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_variant_marketplace_form" model="ir.ui.view">
        <field name="name">product.template.variant.marketplace</field>
        <field name="model">product.template.variant.marketplace</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="mp_variant_ids" widget="one2many" context="{'show_attribute': False}" nolabel="1">
                        <tree string="Variants" editable="bottom">
                            <field name="mp_attribute_id" attrs="{'readonly': [('id', '!=', False)]}" context="{'default_is_marketplace': True}" domain="[('is_marketplace', '=', True)]"/>
<!--                            <field name="mp_unit_id" attrs="{'invisible': [('id', '!=', True)], 'readonly': [('id', '!=', False)]}" context="{'default_attribute_id': mp_attribute_id, 'show_attribute': False}" domain="[('attribute_id', '=', mp_attribute_id)]"/>-->
                            <field name="mp_value_ids" widget="many2many_tags" options="{'no_create_edit': True}" context="{'default_attribute_id': mp_attribute_id, 'show_attribute': False}" domain="[('id', 'not in', mp_filter_value_ids), ('attribute_id', '=', mp_attribute_id)]" required="1"/>
                            <field name='mp_filter_value_ids' widget="many2many_tags" invisible="1"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="create_variants" string="Create Variants"
                        type="object" class="oe_highlight" />
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
       </field>
    </record>
</odoo>
