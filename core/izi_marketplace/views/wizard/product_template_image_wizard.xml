<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_image_wizard_form" model="ir.ui.view">
        <field name="name">product.template.images.wizard</field>
        <field name="model">product.template.images.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="image" widget="image" filename="file_name"/>
                        <field name="mimetype" invisible="1"/>
                        <field name="image_width" invisible="1"/>
                        <field name="image_height" invisible="1"/>
                    </group>
                </group>
                <footer>
                    <button name="create_images" string="Upload Image"
                        type="object" class="oe_highlight" />
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
       </field>
    </record>
</odoo>
