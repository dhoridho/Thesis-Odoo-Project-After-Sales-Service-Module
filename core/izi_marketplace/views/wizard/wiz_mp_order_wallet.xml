<odoo>
  <record id="izi_marketplace.form_wiz_mp_order_wallet" model="ir.ui.view">
    <field name="name">Wizard Marketplace Orders Wallet Form View</field>
    <field name="model">wiz.mp.order.wallet</field>
    <field name="arch" type="xml">
      <form string="Wizard Marketplace Orders Wallet">
        <field name="mp_account_id" invisible="1"/>
        <group>
          <field name="params"/>
          <field name="use_interval" attrs="{'invisible': [('params', '!=', 'by_date_range')]}"/>
        </group>
        <group attrs="{'invisible': [('params', '!=', 'by_date_range')]}">
          <group>
            <field name="interval" attrs="{'invisible': [('use_interval', '=', False)]}"/>
            <field name="from_date" attrs="{'required': [('params', '=', 'by_date_range')]}"/>
          </group>
          <group>
            <field name="interval_type" attrs="{'invisible': [('use_interval', '=', False)]}"/>
            <field name="to_date" attrs="{'required': [('params', '=', 'by_date_range')]}"/>
          </group>
          <group>
            <field name="mode"/>
          </group>
        </group>
        <footer>
          <button name="get_orders_wallet" string="Get Orders Wallet" type="object" class="btn-primary"
                  context="{'close_notifications_and_wizard': True}"/>
          <button string="Cancel" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>