<odoo>
    <record id="izi_marketplace.form_wiz_mp_promotion" model="ir.ui.view">
        <field name="name">Wizard Marketplace Promotion Form View</field>
        <field name="model">wiz.mp.promotion</field>
        <field name="arch" type="xml">
            <form string="Wizard Marketplace Promotion">
                <field name="mp_account_id" invisible="1"/>
                <field name="marketplace" invisible="1"/>
                <group name='mp_get_promotion'>
                    <field name="params"/>
                    <field name="mp_promotion_id" attrs="{'invisible': [('params', '!=', 'by_mp_promotion_id')],
                        'required': [('params', '=', 'by_mp_promotion_id')]}"/>
                </group>
                <group name='mp_fields'>
                </group>
                <footer>
                    <button name="get_promotion" string="Get Promotion" type="object" class="btn-primary" context="{'close_notifications_and_wizard': True}"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>