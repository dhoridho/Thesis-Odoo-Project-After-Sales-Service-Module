<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="izi_marketplace.view_bank_statement_form" model="ir.ui.view">
            <field name="name">Account Bank Statement</field>
            <field name="model">account.bank.statement</field>
            <field name="inherit_id" ref="account.view_bank_statement_form"/>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <field name="mp_account_id" invisible="1"/>
                </field>
                <xpath expr="//header" position="inside">
                    <button name="process_bank_statement_reconciliation" string="Process Reconciliation" type="object" />
                </xpath>
                <xpath expr="//button[@name='button_journal_entries']" position="before">
                    <button class="oe_stat_button" name="action_view_mp_statement_line" string="Statement Lines" type="object" attrs="{'invisible':[('mp_account_id','=', False)]}" icon="fa-bars"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree" position="inside">
                    <field name="mp_wallet_create_time" optional="hidden"/>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Marketplace" attrs="{'invisible': [('mp_account_id', '=', False)]}">
                        <field name="mp_line_ids" readonly="1">
                            <tree editable="bottom" decoration-muted="valid">
                                <field name="sequence" widget="handle"/>
                                <field name="date"/>
                                <field name="payment_ref"/>
                                <field name="narration"/>
                                <field name="amount"/>
                                <field name="mp_wallet_create_time"/>
                                <field name="valid" invisible="1"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Debug" groups="base.group_no_one">
                        <group>
                            <field name="wallet_raw"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>