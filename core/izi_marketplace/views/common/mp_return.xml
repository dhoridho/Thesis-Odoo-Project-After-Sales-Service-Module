<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="izi_marketplace.search_mp_return" model="ir.ui.view">
            <field name="name">MP Return Search View</field>
            <field name="model">mp.return</field>
            <field name="arch" type="xml">
                <search string="Marketplace Return/Refund">
                    <field name="mp_return_sn"/>
                    <filter name="group_by_marketplace" string="Marketplace" context="{'group_by': 'marketplace'}"/>
                    <filter name="group_by_mp_account" string="MP Account" context="{'group_by': 'mp_account_id'}"/>
                </search>
            </field>
        </record>

        <record id="izi_marketplace.mp_return_order_tree" model="ir.ui.view">
            <field name="name">mp.return.tree</field>
            <field name="model">mp.return</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="mp_account_id"/>
                    <field name="marketplace"/>
                    <field name="mp_return_sn"/>
                    <field name="mp_return_create_time"/>
                    <field name="mp_return_status"/>
                </tree>
            </field>
        </record>

        <record id="izi_marketplace.form_mp_return" model="ir.ui.view">
            <field name="name">Marketplace Return Form View</field>
            <field name="model">mp.return</field>
            <field name="arch" type="xml">
                <form string="Marketplace Return">
                    <header name='mp_button_return'>
                        <button name="fetch_order_return" string="Re-Fetch Data" type="object" icon="fa-refresh" context="{'force_update': True}"/>
                        <field name="mp_return_status" widget="statusbar" statusbar_visible="new,in_requested,in_process,completed,closed"/> 
                    </header>
                    <sheet>
                        <group name="summary" string="Return Information">
                            <field name="mp_account_id"/>
                            <field name="marketplace"/>
                            <field name="mp_return_sn"/>
                            <field name="sale_id"/>
                            <field name="mp_order_exid"/>
                            <field name="mp_return_amount"/>
                            <field name="type"/>
                            <field name="mp_return_create_time"/>
                            <field name="mp_return_update_time"/>
                            <field name="mp_return_reason"/>
                        </group>
                        <group name='mp_return_field'>
                        </group>
                        <notebook>
                            <page string="Return Line">
                                <field name="mp_return_line">
                                    <tree editable="top" options="{'no_edit': True, 'no_create': True}">
                                        <field name="mp_return_id" invisible="1"/>
                                        <field name="product_id"/>
                                        <field name="default_code"/>
                                        <field name="mp_item_price"/>
                                        <field name="mp_item_qty"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Return Images">
                                <field name="mp_return_image_ids" class="o_website_sale_image_list">
                                    <tree editable="top">
                                        <field name="mp_return_id" invisible="1"/>
                                        <field name="image" widget='image'/>
                                        <field name="name" widget='url' invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="debug" string="Debug" groups="base.group_no_one">
                                <group name="raw" string="Raw Data">
                                    <field name="raw" nolabel="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>