<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree view for the menuitem -->
        <record id="izi_marketplace.mp_order_time_tree" model="ir.ui.view">
            <field name="name">Marketplace Order Time Tree View</field>
            <field name="model">mp.order.time</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Form view for the menuitem -->
        <record id="izi_marketplace.mp_order_time_form" model="ir.ui.view">
            <field name="name">Marketplace Order Time Form View</field>
            <field name="model">mp.order.time</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="mp_account_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Working Day">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="day"/>
                                        <field name="cutoff_time" widget="timepicker"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Day Off">
                                <field name="day_off_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


    </data>
</odoo>