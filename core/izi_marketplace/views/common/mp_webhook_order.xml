<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="izi_marketplace.search_mp_webhook_order" model="ir.ui.view">
            <field name="name">Webhook Order Search View</field>
            <field name="model">mp.webhook.order</field>
            <field name="arch" type="xml">
                <search string="Webhook Order">
                    <field name="mp_invoice_number"/>
                    <filter name="group_by_mp_account" string="MP Account" context="{'group_by': 'mp_account_id'}"/>
                </search>
            </field>
        </record>

        <record id="izi_marketplace.mp_webhook_order_tree" model="ir.ui.view">
            <field name="name">mp.webhook.order.tree</field>
            <field name="model">mp.webhook.order</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="mp_account_id"/>
                    <field name="marketplace"/>
                    <field name="order_update_time"/>
                    <field name="write_date"/>
                    <field name="mp_invoice_number"/>
                    <field name="mp_order_status"/>
                    <field name="mp_awb_number"/>
                    <field name="is_process"/>
                </tree>
            </field>
        </record>

        <record id="izi_marketplace.form_mp_webhook_order" model="ir.ui.view">
            <field name="name">Marketplace Webhook Order Form View</field>
            <field name="model">mp.webhook.order</field>
            <field name="arch" type="xml">
                <form string="Marketplace Webhook Order">
                    <sheet>
                        <div name="mp_actions">
                           <button name="fetch_webhook_order" string="Re-Fetch MP Order Data" type="object" icon="fa-refresh" context="{'force_update': True}"/>
                        </div>
                        <group name="summary" string="Summary">
                            <field name="mp_invoice_number"/>
                            <field name="mp_account_id"/>
                            <field name="marketplace"/>
                            <field name="order_create_time"/>
                            <field name="order_update_time"/>
                            <field name="mp_order_status"/>
                            <field name="mp_awb_number"/>
                            <field name="is_process"/>
                        </group>
                        <group name="raw" string="Raw Data">
                            <field name="raw" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.server" id="izi_marketplace.multi_action_refetch_webhook_order">
            <field name="name">Refetch Webhook Order</field>
            <field name="model_id" ref="izi_marketplace.model_mp_webhook_order"/>
            <field name="binding_model_id" ref="izi_marketplace.model_mp_webhook_order"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <!-- <field name="priority">8</field> -->
            <field name="code">
if records:
    action = records.fetch_webhook_order()
else:
    raise Warning("Please select webhook order first!")
            </field>
        </record>

    </data>
</odoo>