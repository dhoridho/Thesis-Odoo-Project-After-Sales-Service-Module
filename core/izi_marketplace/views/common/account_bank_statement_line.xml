<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="izi_marketplace.search_bank_statement_line" model="ir.ui.view">
            <field name="name">Bank Statement Line Search View</field>
            <field name="model">account.bank.statement.line</field>
            <field name="arch" type="xml">
                <search string="Bank Statement Line">
                    <field name="mp_invoice_number" string="MP Invoice Number" filter_domain="[('mp_invoice_number','ilike',self)]"/>
                    <filter name="group_by_mp_invoice_number" string="MP Invoice Number" context="{'group_by': 'mp_invoice_number'}"/>
                </search>
            </field>
        </record>

        <record id="izi_marketplace.account_bank_statement_line_tree" model="ir.ui.view">
            <field name="name">Bank Statement Line Tree View</field>
            <field name="model">account.bank.statement.line</field>
            <field name="inherit_id" ref="account.view_bank_statement_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount']" position="before">
                    <field name="narration"/>
                </xpath>
                <xpath expr="//button[@name='button_undo_reconciliation']" position="before">
                    <field name="mp_wallet_create_time"/>
                </xpath>
                <tree>
                </tree>
            </field>
        </record>

        <record id="izi_marketplace.view_bank_statement_line_form" model="ir.ui.view">
            <field name="name">bank.statement.line.form</field>
            <field name="model">account.bank.statement.line</field>
            <field name="inherit_id" ref="account.view_bank_statement_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_id']" position="after">
                    <field name="mp_line_ids" readonly="1">
                        <tree editable="bottom" decoration-muted="valid">
                            <field name="sequence" invisible="1"/>
                            <field name="date"/>
                            <field name="payment_ref"/>
                            <field name="narration"/>
                            <field name="amount"/>
                            <field name="mp_wallet_create_time"/>
                            <field name="valid" invisible="1"/>
                        </tree>
                    </field>
                </xpath>
            </field>
        </record>
    </data>
</odoo>