<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="izi_marketplace.search_mp_statement_line" model="ir.ui.view">
            <field name="name">Marketplace Statement Line Search View</field>
            <field name="model">mp.statement.line</field>
            <field name="arch" type="xml">
                <search string="Marketplace Statement Line">
                    <field name="mp_invoice_number" string="MP Invoice Number" filter_domain="[('mp_invoice_number','ilike',self)]"/>
                    <filter name="group_by_mp_invoice_number" string="MP Invoice Number" context="{'group_by': 'mp_invoice_number'}"/>
                </search>
            </field>
        </record>

        <record id="izi_marketplace.mp_statement_line_tree" model="ir.ui.view">
            <field name="name">MP Statement Line Tree View</field>
            <field name="model">mp.statement.line</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sequence" widget="handle"/>
                    <field name="date"/>
                    <field name="payment_ref"/>
                    <field name="narration"/>
                    <field name="amount"/>
                    <field name="mp_wallet_create_time"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>