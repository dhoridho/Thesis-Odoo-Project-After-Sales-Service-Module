<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree view for the menuitem -->
        <record id="izi_marketplace.mp_wallet_statement_label_tree" model="ir.ui.view">
            <field name="name">Marketplace Wallet Statement Label Tree View</field>
            <field name="model">mp.wallet.statement.label</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Form view for the menuitem -->
        <record id="izi_marketplace.mp_wallet_statement_label_form" model="ir.ui.view">
            <field name="name">Marketplace Wallet Statement Label Form View</field>
            <field name="model">mp.wallet.statement.label</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="mp_account_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Label Details">
                                <field name="line_ids">
                                    <tree editable="top">
                                        <field name="name"/>
                                        <field name="action_type"/>
                                        <field name="account_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        
    </data>
</odoo>