<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree view for the menuitem -->
        <record id="izi_marketplace.mp_promotion_program_tree" model="ir.ui.view">
            <field name="name">MP Promotion Program Tree View</field>
            <field name="model">mp.promotion.program</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="mp_account_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Form view for the menuitem -->
        <record id="izi_marketplace.mp_promotion_program_form" model="ir.ui.view">
            <field name="name">MP Promotion Program Form View</field>
            <field name="model">mp.promotion.program</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_submit" string="Submit" class="oe_highlight" type="object" states="draft"/>
                        <button name="action_stop" string="Stop Promotion" class="oe_highlight" type="object" states="run" confirm="You sure stop this promotion?"/>
                        <button name="action_update" string="Update Promotion" type="object" states="wait,run"/>
                        <button name="action_delete" class="btn-danger" string="Delete Promotion" type="object" states="wait"/>
                        <button name="action_sync" string="Sycronize Promotion to Marketplace" type="object" states="wait,run,stop"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,wait,run,stop"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button string="Active" name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                            </button>
                        </div>
                        <group string='Marketplace Information'>
                            <field name="marketplace" force_save="1"/>
                            <field name="mp_account_id" force_save="1" domain="[('marketplace', '=', marketplace)]"/>
                        </group>
                        <group string='Promotion Type'>
                            <field name="promotion_type" domain="[('marketplace', '=', marketplace)]"/>
                        </group>
                        <group string="Base Promotion Information">
                            <field name="name"/>
                            <field name="code" invisible="1"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                        <div name='mp_promotion_fields'>
                        </div>
                        <notebook>
                            <page string="Product Discount" attrs="{'invisible':[('code', '!=', 'discount')]}">
                                <field name="product_discount_ids">
                                    <tree editable="top">
                                        <field name="promotion_id" invisible="1"/>
                                        <field name="mp_account_id" invisible="1" force_save="1"/>
                                        <field name="mp_product_id" required="1" domain="[('mp_account_id', '=', mp_account_id),('is_active', '=', True)]" force_save="1"/>
                                        <field name="mp_product_variant_count" invisible="1"/>
                                        <field name="mp_product_variant_id" domain="[('mp_product_id', '=', mp_product_id),('is_active', '=', True)]" attrs="{'required': [('mp_product_variant_count','!=', 0)]}" force_save="1"/>
                                        <field name="item_original_price"/>
                                        <field name="price_mode"/>
                                        <field name="item_price" required="1"/>
                                        <field name="item_stock"/>
                                        <field name="final_item_price"/>
                                        <field name="purchase_limit"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Debug" groups="base.group_no_one">
                                <group>
                                    <field name="mp_external_id"/>
                                    <field name="md5sign"/>
                                    <field name="raw"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
       