<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="email_template_purchase_request" model="mail.template">
        <field name="name">Purchase Request</field>
        <field name="email_from">${ctx.get('email_from')}</field>
        <field name="email_to">${ctx.get('email_to')}</field>
        <field name="subject">Purchase Request For Approval</field>
        <field name="model_id" ref="equip3_purchase_operation.model_purchase_request"/>
        <field name="auto_delete" eval="True"/>
        <field name="body_html"><![CDATA[
            <p>Date: ${ctx.get('date')}</p>
            <p>Subject : Reminder for Purchase Request Approval</p>
            </br>
            <p>Dear ${ctx.get('approver_name')},</p>
            <p>Based on the Purchase Request approval request ${object.name}.</p>
            <p>You have approval pending that need your decision to approve or reject the Purchase Request approval request from ${object.request_partner_id.name}.</p>
            </br>
            <p>You can approve or reject the Purchase Request by clicking this button:</p>
            <div style = "margin: 16px;">
                <a href=${ctx.get('url')} style = "padding: 5px 10px; font-size: 12px; line-height: 18px;
                 color: #FFFFFF; border-color:#875A7B; text-decoration: none; display: inline-block; 
                 margin-bottom: 0px; font-weight: 400; text-align: center; vertical-align: middle; 
                 cursor: pointer; white-space: nowrap; background-image: none; background-color: #875A7B;
                 border: 1px solid #875A7B; border-radius:3px">${object.name}</a></div>
            <p>Thank you.</p>
            ]]></field>
    </record>

    <record id="email_template_purchase_request_approve" model="mail.template">
        <field name="name">Purchas Order Approve</field>
        <field name="email_from">${ctx.get('email_from')}</field>
        <field name="email_to">${ctx.get('email_to')}</field>
        <field name="subject">Purchase Request Approve</field>
        <field name="model_id" ref="equip3_purchase_operation.model_purchase_request"/>
        <field name="auto_delete" eval="True"/>
        <field name="body_html"><![CDATA[
            <p>Date: ${ctx.get('date')}</p>
            <p>Subject : Reminder for Purchase Request Approval</p>
            </br>
            <p>Dear ${ctx.get('user_name')},</p>
            <p>Based on the Purchase Request approval request ${object.name}.</p>
            <p>You have approval pending that need your decision to approve or reject the Purchase Request approval request from ${object.request_partner_id.name}.</p>
            <p>For your information, the previous approver was ${ctx.get('submitter')}</p>
            </br>
            <p>You can approve or reject the Purchase Request by clicking this button:</p>
            <div style = "margin: 16px;">
                <a href=${ctx.get('url')} style = "padding: 5px 10px; font-size: 12px; line-height: 18px;
                 color: #FFFFFF; border-color:#875A7B; text-decoration: none; display: inline-block; 
                 margin-bottom: 0px; font-weight: 400; text-align: center; vertical-align: middle; 
                 cursor: pointer; white-space: nowrap; background-image: none; background-color: #875A7B;
                 border: 1px solid #875A7B; border-radius:3px">${object.name}</a></div>
            <p>Thank you.</p>
            ]]></field>
    </record>

    <record id="email_template_purchase_req_approval_approved" model="mail.template">
        <field name="name">Reminder for Purchase Request Approval</field>
        <field name="email_from">${ctx.get('email_from')}</field>
        <field name="email_to">${ctx.get('email_to')}</field>
        <field name="subject">Reminder for Purchase Request Approval has been Approved</field>
        <field name="model_id" ref="equip3_purchase_operation.model_purchase_request"/>
        <field name="auto_delete" eval="True"/>
        <field name="body_html"><![CDATA[
            <p>Date: ${ctx.get('date')}</p>
            <p>Subject : Reminder for Purchase Request Approval has been Approved</p>
            </br>
            <p>Dear ${object.request_partner_id.name},</p>
            <p>Based on the Purchase Request Approval Request ${object.name}.</p> 
            <p>Your Purchase Request approval request has been Approved.</p>
            </br>
            <p>You can confirm or cancel the Purchase Request by clicking this button:</p>
            <div style = "margin: 16px;">
                <a href=${ctx.get('url')} style = "padding: 5px 10px; font-size: 12px; line-height: 18px;
                 color: #FFFFFF; border-color:#875A7B; text-decoration: none; display: inline-block; 
                 margin-bottom: 0px; font-weight: 400; text-align: center; vertical-align: middle; 
                 cursor: pointer; white-space: nowrap; background-image: none; background-color: #875A7B;
                 border: 1px solid #875A7B; border-radius:3px">${object.name}</a></div>
            <p>Thank you.</p>
            ]]></field>
    </record>

    <record id="email_template_purchase_req_approval_rejected" model="mail.template">
        <field name="name">Reminder for Purchase Request Approval</field>
        <field name="email_from">${ctx.get('email_from')}</field>
        <field name="email_to">${ctx.get('email_to')}</field>
        <field name="subject">Reminder for Purchase Request Approval has been Rejected</field>
        <field name="model_id" ref="equip3_purchase_operation.model_purchase_request"/>
        <field name="auto_delete" eval="True"/>
        <field name="body_html"><![CDATA[
            <p>Date: ${ctx.get('date')}</p>
            <p>Subject : Reminder for Purchase Request Approval has been Rejected</p>
            </br>
            <p>Dear ${object.request_partner_id.name},</p>
            <p>Based on the Purchase Request Approval Request ${object.name}.</p> 
            <p>Your Purchase Request approval request has been Rejected.</p>
            </br>
            <p>You can check the Purchase Request by clicking this button:</p>
            <div style = "margin: 16px;">
                <a href=${ctx.get('url')} style = "padding: 5px 10px; font-size: 12px; line-height: 18px;
                 color: #FFFFFF; border-color:#875A7B; text-decoration: none; display: inline-block; 
                 margin-bottom: 0px; font-weight: 400; text-align: center; vertical-align: middle; 
                 cursor: pointer; white-space: nowrap; background-image: none; background-color: #875A7B;
                 border: 1px solid #875A7B; border-radius:3px">${object.name}</a></div>
            <p>Thank you.</p>
            ]]></field>
    </record>

</odoo>
