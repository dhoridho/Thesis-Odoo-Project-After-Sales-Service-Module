    <record id="whatsapp_swo_template" model="mail.template">
        <field name="name">SWO: Confirm Order</field>
        <field name="subject">Service Work Order</field>
        <field name="model_id" ref="model_service_work_order"/>
        <field name="body_html"><![CDATA[<div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px;">
         <p style="margin: 0px; padding: 0px; font-size: 13px;">
                Dear ${object.partner_id.name}
                % if object.partner_id.parent_id:
                    (${object.partner_id.parent_id.name})
                % endif
                <br/><br/>
                This is about the service work order <strong>${object.name}</strong>
                % if object.origin:
                    with reference: ${object.origin}
                % endif
                from ${object.company_id.name}.
                <br/>
                The schedule date and time is "${object.date_planned}"
                <br/>
                If you have any questions, please do not hesitate to contact us.
                <br/><br/>
                Best regards,
            </p>
        ]]>

        </field>
    </record>
