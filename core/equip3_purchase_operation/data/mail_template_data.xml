<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="email_template_pr_expiry_reminder" model="mail.template">
            <field name="name">Purchase Request: Expiry Reminder - Before</field>
            <field name="model_id" ref="equip3_purchase_operation.model_purchase_request"/>
            <field name="email_from">${(object.company_id.email) |safe}</field>
            <field name="subject">${object.company_id.name} Purchase Request (Ref ${object.name or 'n/a' })</field>
            <field name="email_to" >${object.requested_by.email}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear ${object.requested_by.name}
                        <br/><br/>
                        Here is reminder that the purchase request <strong>${object.name}</strong>
                        will be expired in
                        % if object.expiry_date:
                        <strong>${object.expiry_date}</strong>.
                        % else:
                        <strong>undefined</strong>.
                        % endif
                        itâ€™s
                        % if object.days_left:
                        <strong>${object.days_left}</strong>
                        % else:
                        <strong>undefined</strong>.
                        % endif
                        days left.
                        Could you confirm it before expired?
                        <br/><br/>
                        <div>
                            <div style="display: inline-block; margin: 15px 0px; text-align: center;">
                                <a href="${object.get_full_url()}" target="_blank" style="padding: 5px 10px; color: #ffffff; text-decoration: none; background-color: #875a7b; border: 1px solid #875a7b; border-radius: 3px;">
                                    Yes
                                </a>
                            </div>
                            <div style="display: inline-block; margin: 15px 0px; text-align: center;">
                                <a href="${object.get_full_url()}" target="_blank" style="padding: 5px 10px; color: #ffffff; text-decoration: none; background-color: #875a7b; border: 1px solid #875a7b; border-radius: 3px;">
                                    No, Update Date
                                </a>
                            </div>
                        </div>
                        <br/>
                        If you have any questions, please do not hesitate to contact us.
                        <div>&amp;nbsp;</div>
                        Best regards,
                    </p>
                </div></field>
        </record>


        <record id="email_template_pr_expiry_reminder_after" model="mail.template">
            <field name="name">Purchase Request: Expiry Reminder - After</field>
            <field name="model_id" ref="equip3_purchase_operation.model_purchase_request"/>
            <field name="email_from">${(object.company_id.email) |safe}</field>
            <field name="subject">${object.company_id.name} Purchase Request (Ref ${object.name or 'n/a' })</field>
            <field name="email_to" >${object.requested_by.email}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear ${object.requested_by.name}
                        <br/><br/>
                        Here is information that the purchase request <strong>${object.name}</strong>
                        has been expired since
                        % if object.expiry_date:
                        <strong>${object.expiry_date}</strong>.
                        % else:
                        <strong>undefined</strong>.
                        % endif
                        <br/><br/>
                        <div style="display: inline-block; margin: 15px 0px; text-align: center;">
                            <a href="${object.get_full_url()}" target="_blank" style="padding: 5px 10px; color: #ffffff; text-decoration: none; background-color: #875a7b; border: 1px solid #875a7b; border-radius: 3px;">
                                ${object.name}
                            </a>
                        </div>
                        <br/><br/>
                        If you have any questions, please do not hesitate to contact us.
                        <div>&amp;nbsp;</div>
                        Best regards,
                    </p>
                </div>
            </field>
        </record>

        <record id="ss_whatsapp_connector.whatsapp_purchase_template" model="mail.template">
            <field name="body_html">
                <![CDATA[<div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px;">
                         <p style="margin: 0px; padding: 0px; font-size: 13px;">
                                Dear ${object.partner_id.name}
                                % if object.partner_id.parent_id:
                                    (${object.partner_id.parent_id.name})
                                % endif
                                <br/><br/>
                                % if object.state != 'purchase':
                                    This is about the Request for Quotation <strong>${object.name}</strong>
                                % else:
                                    This is about the purchase order <strong>${object.name}</strong>
                                % endif
                                % if object.partner_ref:
                                    with reference: ${object.partner_ref}
                                % endif
                                with amount ${format_amount(object.amount_total, object.currency_id)}
                                from ${object.company_id.name}.
                                <br/>
                                The order date and time is "${object.timezone_date}"
                                <br/>
                                If you have any questions, please do not hesitate to contact us.
                                <br/><br/>
                                Best regards,
                            </p>
                        ]]>
            </field>
        </record>
    </data>
</odoo>