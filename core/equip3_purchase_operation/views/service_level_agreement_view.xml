<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_form_service_level_condition" model="ir.ui.view">
        <field name="name">service.level.agreement.form</field>
        <field name="model">service.level.agreement</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                        </group>
                        <group>
                            <field name="description" />
                        </group>
                    </group>
                    <group string="Agreement">
                        <field name="term_condition" widget="html" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_service_level_condition" model="ir.ui.view">
        <field name="name">service.level.agreement.tree</field>
        <field name="model">service.level.agreement</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="service_level_action" model="ir.actions.act_window">
        <field name="name">Service Level Agreement Template</field>
        <field name="res_model">service.level.agreement</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- change parent="purchase.menu_purchase_config" -->
    <!-- change sequence="1" -->
    <menuitem
        id="service_level_menu"
        name="Service Level Agreement Template"
        parent="equip3_purchase_accessright_setting.menu_purchase_config_sub"
        action="service_level_action"
        sequence="3"/>
</odoo>