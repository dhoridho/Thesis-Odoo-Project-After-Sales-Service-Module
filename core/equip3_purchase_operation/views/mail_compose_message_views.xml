<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_mail_compose_message_form" model="ir.ui.view">
        <field name="name">mail.compose.message.inherit</field>
        <field name="model">mail.compose.message</field>
        <field name="inherit_id" ref="mail.email_compose_message_wizard_form"/>
        <field name="arch" type="xml">
            <xpath expr="//footer/button[@name='action_send_mail']" position="attributes">
                <attribute name="invisible">context.get('hide_send_button', False)</attribute>
            </xpath>
        </field>
    </record>

</odoo>
