<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_demo_exclusive" inherit_id="general_template.report_demo_exclusive">
        <xpath expr="//img" position="attributes">
            <attribute name="style">max-height: 50px;</attribute>
            <attribute name="t-att-src">'data:image/png;base64,%s' % to_text(o.logo)</attribute>
        </xpath>
        <xpath expr="//img/.." position="attributes">
            <attribute name="valign">top</attribute>
        </xpath>
        <xpath expr="//tr/td/table/tr/td[2]/h2" position="attributes">
            <attribute name="t-attf-style">text-transform:capitalize; font-size: 20px;padding:0px; margin:0;color: #{o.theme_color or '#ffffff'};</attribute>
        </xpath>
        <xpath expr="//tr/td/table/tr/td[3]/h2" position="attributes">
            <attribute name="t-attf-style">text-transform:capitalize; margin-top: -17px !important;font-size: 20px; padding:0px; margin:0; color: #{o.theme_color or '#ffffff'};</attribute>
        </xpath>
    </template>
    <template id="report_demo_template_main" inherit_id="general_template.report_demo_template_main">
        <xpath expr="//center/table" position="attributes">
            <attribute name="t-attf-style">padding:20px 20px 20px 20px; margin:0; background:#fff; text-transform:uppercase; line-height:20px; border:2px solid #{o.theme_color or '#000000'};</attribute>
        </xpath>
    </template>
    <template id="report_demo_company_details" inherit_id="general_template.report_demo_company_details">
        <xpath expr="//span" position="attributes">
            <attribute name="t-attf-style">padding:0px; font-size:12px;margin:0; color: #51565b;</attribute>
        </xpath>
        <xpath expr="//p[1]" position="attributes">
            <attribute name="t-attf-style">text-transform:capitalize; font-size:12px; margin:0; padding-top:0;color: #51565b;</attribute>
        </xpath>
        <xpath expr="//p[2]" position="attributes">
            <attribute name="t-attf-style">text-transform:capitalize; font-size:12px; margin:8px 0px; padding:0;color: #51565b;</attribute>
        </xpath>
    </template>
    <template id="report_demo_customer_details" inherit_id="general_template.report_demo_customer_details">
        <xpath expr="//span" position="attributes">
            <attribute name="t-attf-style">text-transform:capitalize; font-size:12px;padding:0px; margin:0; color: #51565b;</attribute>
        </xpath>
        <xpath expr="//p[1]" position="attributes">
            <attribute name="t-attf-style">text-transform:capitalize; font-size:12px;margin:0; padding-top:0; color: #51565b;</attribute>
        </xpath>
        <xpath expr="//p[2]" position="attributes">
            <attribute name="t-attf-style">text-transform:capitalize; font-size:12px;margin:8px 0px; padding:0; color: #51565b;</attribute>
        </xpath>
    </template>

    <template id="templates_company_details" inherit_id="general_template.templates_company_details">
        <xpath expr="//span" position="attributes">
            <attribute name="t-attf-style">text-transform:capitalize; padding:0px; margin:0; color: #51565b;</attribute>
        </xpath>
        <xpath expr="//div" position="attributes">
            <attribute name="t-attf-style">color: #51565b;</attribute>
        </xpath>
    </template>

    <template id="sale_templates_customer_details" inherit_id="general_template.sale_templates_customer_details">
        <xpath expr="//t[1]/span" position="attributes">
            <attribute name="t-attf-style">text-transform:capitalize; padding:0px; margin:0; color: #51565b;</attribute>
        </xpath>
        <xpath expr="//t/t/p" position="attributes">
            <attribute name="t-attf-style">color: #51565b;</attribute>
        </xpath>
        <xpath expr="//t[2]/span" position="attributes">
            <attribute name="t-attf-style">text-transform:capitalize;padding:0px; margin:0; color: #51565b;</attribute>
        </xpath>
    </template>

    <template id="sale_exclusive_header" inherit_id="general_template.sale_exclusive_header">
        <xpath expr="//center/table/tr/td/table/tr/td[1]/img" position="attributes">
            <attribute name="t-att-src">'data:image/png;base64,%s' % to_text(o.company_id.logo)</attribute>
            <attribute name="style">max-height:50px; vertical-align: top; float:none;</attribute>
        </xpath>
    </template>

    <template id="exclusive_header" inherit_id="general_template.exclusive_header">
        <xpath expr="//center/table/tr/td/table/tr/td[1]/img" position="attributes">
            <attribute name="t-att-src">'data:image/png;base64,%s' % to_text(o.company_id.logo)</attribute>
            <attribute name="style">max-height: 50px; margin-top: 10%;</attribute>
        </xpath>
    </template>

    <template id="delivery_exclusive_header" inherit_id="general_template.delivery_exclusive_header">
        <xpath expr="//img[2]" position="attributes">
            <attribute name="style">display: none;</attribute>
        </xpath>
        <xpath expr="//center/table/tr[2]/td/table/tr/td[1]" position="attributes">
            <attribute name="valign">top</attribute>
        </xpath>
        <xpath expr="//center/table/tr/td/table/tr/td[1]/img" position="attributes">
            <attribute name="t-att-src">'data:image/png;base64,%s' % to_text(o.company_id.logo)</attribute>
            <attribute name="style">max-height: 50px; margin-top: 8%;</attribute>
        </xpath>
    </template>

    <template id="picking_exclusive_header" inherit_id="general_template.picking_exclusive_header">
        <xpath expr="//img[2]" position="attributes">
            <attribute name="style">display: none;</attribute>
        </xpath>
        <xpath expr="//center/table/tr/td/table/tr/td[1]" position="attributes">
            <attribute name="valign">top</attribute>
        </xpath>
        <xpath expr="//center/table/tr/td/table/tr/td[1]/img" position="attributes">
            <attribute name="t-att-src">'data:image/png;base64,%s' % to_text(o.company_id.logo)</attribute>
            <attribute name="style">max-height: 50px; margin-top: 8%;</attribute>
        </xpath>
    </template>
</odoo>