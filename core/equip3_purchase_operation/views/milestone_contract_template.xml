<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- milestone.contract.template search view -->
        <record id="milestone_contract_template_view_search" model="ir.ui.view">
            <field name="name">milestone.contract.template.view.search</field>
            <field name="model">milestone.contract.template</field>
            <field name="arch" type="xml">
                <search string="">
                    <!-- Add your fields here -->
                    <field name="name"/>
                </search>
            </field>
        </record>

        <!-- milestone.contract.template form view -->
        <record id="milestone_contract_template_view_form" model="ir.ui.view">
            <field name="name">milestone.contract.template.view.form</field>
            <field name="model">milestone.contract.template</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <!-- Add your fields here -->
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="milestone_and_term" string="Milestone and Terms">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="checklist_template_id"/>
                                        <field name="contract_term"/>
                                    </tree>
                                </field>
                            </page>
                            <!-- <page name="checklist" string="Checklist">
                                <group>
                                    <field name="checklist_template_id"/>
                                </group>
                                <field name="checklist_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="desc"/>
                                    </tree>
                                </field>
                            </page> -->
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- milestone.contract.template tree view -->
        <record id="milestone_contract_template_view_tree" model="ir.ui.view">
            <field name="name">milestone.contract.template.view.tree</field>
            <field name="model">milestone.contract.template</field>
            <field name="arch" type="xml">
                <tree>
                    <!-- Add your fields here -->
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- milestone.contract.template action window -->
        <record id="milestone_contract_template_action" model="ir.actions.act_window">
            <field name="name">Milestone and Contract Term Template</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">milestone.contract.template</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p><p>
                    <!-- More details about what a user can do with this object will be OK --> 
                </p>
            </field>
        </record>
        
        <!-- This Menu Item must have a parent and an action -->
        <!-- change parent="purchase.menu_purchase_config" -->
        <!-- add sequence="14" -->
         <menuitem id="milestone_contract_template_menu_act" name="Milestone and Contract Term Template"
                   parent="equip3_purchase_accessright_setting.menu_purchase_config_sub"
                   action="milestone_contract_template_action" sequence="14"/>
    </data>
</odoo>