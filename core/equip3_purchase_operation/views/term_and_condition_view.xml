<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_form_term_condition" model="ir.ui.view">
        <field name="name">term.condition.form</field>
        <field name="model">term.condition</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                        </group>
                        <group>
                            <field name="description" />
                        </group>
                    </group>
                    <group string="Term &amp; Conditions">
                        <field name="term_condition" widget="html" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_term_condition" model="ir.ui.view">
        <field name="name">term.condition.tree</field>
        <field name="model">term.condition</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="term_condition_action" model="ir.actions.act_window">
        <field name="name">Terms &amp; Conditions</field>
        <field name="res_model">term.condition</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- change parent="purchase.menu_purchase_config" -->
    <!-- change sequence="1" -->
    <menuitem
            id="term_condition_menu"
            name="Terms &amp; Conditions"
            parent="equip3_purchase_accessright_setting.menu_purchase_config_sub"
            action="term_condition_action"
            sequence="2"/>

    <record id="equip3_purchase_accessright_setting.approval_matrix_configuration_menu" model="ir.ui.menu">
        <field name="sequence">2</field>
    </record>
    <record id="dev_purchase_team.menu_dev_purchase_team" model="ir.ui.menu">
        <field name="sequence">3</field>
    </record>
</odoo>