<?xml version ="1.0" encoding="utf-8" ?>
<odoo>
	<record id="res_config_settings_view_form_purchase_inherit_exp_date" model="ir.ui.view">
		<field name="name">res.config.settings.view.form.purchase.inherit.exp.date</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase" />
		<field name="arch" type="xml">
			<xpath expr="//div[@data-key='purchase']//div[@name='purchase_setting_container']" position="after">
				<div id="purchase_request_document" groups="equip3_purchase_operation.group_pr_purchase_document">
					<h2>Purchase Request Document</h2>
					<div class="row mt16 o_settings_container">
						<field name="is_good_services_order" invisible="1"/>
						<div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('is_good_services_order','=',True)]}">
							<div class="o_setting_left_pane" />
							<div class="o_setting_right_pane">
								<span class="o_form_label">Purchase Request Expiry Date</span>
								<div class="text-muted">
									<field name="pr_expiry_date" /> Days
								</div>
							</div>
						</div>
						<div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('is_good_services_order','=',False)]}">
							<div class="o_setting_left_pane" />
							<div class="o_setting_right_pane">
								<span class="o_form_label">Purchase Request Goods Order Expiry Date</span>
								<div class="text-muted">
									<field name="pr_expiry_date_goods" /> Days
								</div>
							</div>
						</div>
						<div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('is_good_services_order','=',False)]}">
							<div class="o_setting_left_pane" />
							<div class="o_setting_right_pane">
								<span class="o_form_label">Purchase Request Services Order Expiry Date</span>
								<div class="text-muted">
									<field name="pr_expiry_date_services" /> Days
								</div>
							</div>
						</div>
						<div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('max_percentage','=',False)]}">
							<div class="o_setting_left_pane">
							</div>
							<div class="o_setting_right_pane">
								<label for="pr_qty_limit" string="Purchase Request Overlimit Quantity in Purchase Order and Purchase Tender"/>
								<field  class="col-12 col-lg-4" name="pr_qty_limit" />
								<div class="text-muted">
									To set purchase order quantity overlimit from purchase request.
								</div>
								<div attrs="{'invisible': [('pr_qty_limit','!=', 'percent')]}">
									<label for="max_percentage" string="Maximum Percentage" />	
									<field class="col-md-2 mr-2" name="max_percentage" /><span>%</span>
								</div>								
							</div>
						</div>
						<div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('is_good_services_order','=',False)]}"/>
						<div class="col-12 col-lg-6 o_setting_box">
							<div class="o_setting_left_pane">
								<field name="pr_expiry_notification" />
							</div>
							<div class="o_setting_right_pane">
								<label for="pr_expiry_notification" string="Document Expiry Notification" />
								<div class="text-muted">
									Set Mail Document Expiry Notification
								</div>
							</div>
						</div>
						<div class="col-12 col-lg-6 o_setting_box">
							<div class="o_setting_left_pane">
								<field name="is_email_notification_req" />
							</div>
							<div class="o_setting_right_pane">
								<label for="is_email_notification_req" string="Email Notification for Purchase Request Approval" />
								<div class="text-muted">
									If is checked , it will be send an Email notification to all Purchase Request Approver
								</div>
							</div>
						</div>
						<div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('pr_expiry_notification','=',False)]}">
							<div class="o_setting_left_pane">
								<field name="pr_on_date_notify" />
							</div>
							<div class="o_setting_right_pane">
								<label for="pr_on_date_notify" string="On Expiry Date Notification" />
								<div class="text-muted">
									On Document Expiry Date Notification
								</div>
							</div>
						</div>
						<div class="col-12 col-lg-6 o_setting_box">
							<div class="o_setting_left_pane">
								<field name="is_whatsapp_notification_req" />
							</div>
							<div class="o_setting_right_pane">
								<label for="is_whatsapp_notification_req" string="Whatsapp Notification for Purchase Request Approval" />
								<div class="text-muted">
									If is checked , it will be send an Whatsapp notification to all Purchase Request Approver
								</div>
							</div>
						</div>
						<div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('pr_expiry_notification','=',False)]}">
							<div class="o_setting_left_pane" />
							<div class="o_setting_right_pane">
								<label for="pr_enter_before_first_notify" string="Notify Before Expiry Date" class="o_light_label" />
								<field class="col-2" name="pr_enter_before_first_notify" />
							</div>
						</div>
						<div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('pr_expiry_notification','=',False)]}">
							<div class="o_setting_left_pane" />
							<div class="o_setting_right_pane">
								<label for="pr_enter_after_first_notify" string="Notify After Expiry Date" class="o_light_label" />
								<field class="col-2" name="pr_enter_after_first_notify" />
							</div>
						</div>
						<div class="app_settings_block">
						    <h2>Vendor Purchase Limit</h2>
						    <div class="row mt16 o_settings_container">
						    <div class="col-xs-12 col-md-6 o_setting_box">
						    <div class="o_setting_left_pane"></div>
						    <div class="o_setting_right_pane">
						        <label for="vendor_purchase_limit" />
						        <div class="text-muted">
						            Default Vendor purchase limit (set the default purchase limit amount for new vendor)
						        </div>
						        <div class="mt8">
						            <field name="vendor_purchase_limit" />
						        </div>
						    </div>
						    </div>
						</div>
						</div>
					</div>
				</div>

			</xpath>
			<xpath expr="//div[@data-key='purchase']//div[@groups='sh_all_in_one_purchase_tools.group_sh_purchase_document']" position="inside">
				<div class="row mt16 o_settings_container">
					<div class="col-12 col-lg-6 o_setting_box">
						<div class="o_setting_left_pane">
							<field name="multilevel_disc" />
						</div>
						<div class="o_setting_right_pane">
							<label for="multilevel_disc" string="Multi Level Discount" />
						</div>
					</div>
				</div>
			</xpath>
			<xpath expr="//div[@data-key='purchase']//div[@name='purchase_setting_container']//div[@id='auto_receipt_reminder']" position="after">
				<div class="col-12 col-lg-6 o_setting_box" id="log_purchase_order">
					<div class="o_setting_left_pane">
						<field name="log_po"/>
					</div>
					<div class="o_setting_right_pane">
						<label for="log_po"/>
						<div class="text-muted">
							Create log for vendor name, vendor bill address, currency and expiry date when create Purchase Order.<br/>
							Create log when create Purchase Order Line.<br/>
							Create log for product, discount, qty, unit price, expected date and destination when edit Purchase Order Line.<br/>
						</div>
					</div>
				</div>
			</xpath>
		</field>
	</record>

	<record id="res_config_settings_view_form_purchase_inherit_exp_date_po" model="ir.ui.view">
		<field name="name">res.config.settings.view.form.purchase.inherit.exp.date.po</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id" ref="sh_all_in_one_purchase_tools.sh_res_config_settings_purchase_document_form_inherit" />
		<field name="arch" type="xml">
			<xpath expr="//div[@id='purchase_document']" position="inside">
				<div class="row mt16 o_settings_container">
					<div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('is_good_services_order','=',True)]}">
						<div class="o_setting_left_pane" />
						<div class="o_setting_right_pane">
							<span class="o_form_label">RFQ Expiry Date</span>
							<div class="text-muted">
								<field name="rfq_exp_date" /> Days
							</div>
						</div>
					</div>
					<div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('is_good_services_order','=',True)]}"/>
					<div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('is_good_services_order','=',False)]}">
						<div class="o_setting_left_pane" />
						<div class="o_setting_right_pane">
							<span class="o_form_label">RFQ Services Order Expiry Date</span>
							<div class="text-muted">
								<field name="rfq_exp_date_services" /> Days
							</div>
						</div>
					</div>
					<div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('is_good_services_order','=',True)]}">
						<div class="o_setting_left_pane" />
						<div class="o_setting_right_pane">
							<span class="o_form_label">PO Expiry Date</span>
							<div class="text-muted">
								<field name="po_exp_date" /> Days
							</div>
						</div>
					</div>
					<div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('is_good_services_order','=',False)]}">
						<div class="o_setting_left_pane" />
						<div class="o_setting_right_pane">
							<span class="o_form_label">RFQ Goods Order Expiry Date</span>
							<div class="text-muted">
								<field name="rfq_exp_date_goods" /> Days
							</div>
						</div>
					</div>
					<div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('is_good_services_order','=',True)]}"/>
					<div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('is_good_services_order','=',False)]}">
						<div class="o_setting_left_pane" />
						<div class="o_setting_right_pane">
							<span class="o_form_label">PO Services Order Expiry Date</span>
							<div class="text-muted">
								<field name="po_exp_date_services" /> Days
							</div>
						</div>
					</div>
					<div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('is_good_services_order','=',True)]}"/>
					<div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('is_good_services_order','=',False)]}">
						<div class="o_setting_left_pane" />
						<div class="o_setting_right_pane">
							<span class="o_form_label">PO Goods Order Expiry Date</span>
							<div class="text-muted">
								<field name="po_exp_date_goods" /> Days
							</div>
						</div>
					</div>
				</div>
			</xpath>
		</field>
	</record>
</odoo>