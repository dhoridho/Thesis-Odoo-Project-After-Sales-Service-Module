<odoo>
	<data>
		<template id="assets_frontend" inherit_id="website.assets_frontend" name="Purchase Comparison Print">
			<xpath expr="//script[last()]" position="after">
				<script type="text/javascript" src="/equip3_purchase_operation/static/src/js/purchase_comparison_print.js" />
			</xpath>
		</template>
		<template id="purchase_comparison" name="Purchase Comparison Chart">
			<t t-call="website.layout">
				<style>
					footer{display:none !important;}
				</style>
				<br />
				<div class="container">
					<div t-ignore="true" class="pull-right">
						<form name="form_purchase_comp_print" action="/purchase_comparison" method="post">
							<input type="text" id="purchase_comp_rpt_type" name="purchase_comp_rpt_type" style="display:none"></input>
							<input type="text" id="rfq_ids" name="rfq_ids" t-att-value="rfq_ids" style="display:none"></input>
						</form>
						<button id="btn_purchase_comp_print_pdf" class="btn btn_sm btn-primary">Print PDF</button>
						<button id="btn_purchase_comp_print_xls" class="btn btn_sm btn-success">Print Excel</button>
					</div>
					<br />
					<br />
					<div class="row">
						<table class="table-striped table-bordered">
							<body>
								<tr><td t-att-colspan="report_column"><h2 style="text-align: center;">Purchase Comparison Chart</h2></td></tr>
								<tr>
									<th>Reference</th>
									<t t-foreach="rfq_info" t-as="rfq">
										<th colspan="3" style="text-align:center;">
											<span t-esc="rfq['rfq_name']" />
										</th>
									</t>
								</tr>
								<tr>
									<th>Vendor</th>
									<t t-foreach="supplier" t-as="name">
										<th colspan="3" style="text-align:center;">
											<span t-esc="name['sname']" />
										</th>
									</t>
								</tr>
								<tr>
									<th>Products</th>
									<t t-foreach="rfq_info" t-as="rec">
										<th style="text-align:center;">Quantity</th>
										<th style="text-align:center;">Unit Price</th>
										<th style="text-align:center;">Subtotal</th>
									</t>
								</tr>
								<t t-foreach="data" t-as="product">
									<tr>
										<td><span t-esc="product['product_name']" /></td>
										<t t-foreach="product['record']" t-as="rec">
											<td><span t-esc="rec['qty']" /><span t-esc="rec['uom']" /></td>
											<td style="text-align:right;"><span t-esc="rec['price']" /></td>
											<td style="text-align:right;"><span t-esc="rec['subtotal']" /></td>
										</t>
									</tr>
								</t>
								<tr>
									<th>Total</th>
									<t t-foreach="rfq_info" t-as="rfq">
										<th colspan="3" style="text-align:center;">
											<span t-esc="rfq['amount']" />
										</th>
									</t>
								</tr>
							</body>
						</table>
					</div>
				</div>
			</t>
		</template>
	</data>
</odoo>