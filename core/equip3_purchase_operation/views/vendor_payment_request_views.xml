<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- Vendor Payment Request tree view -->
    <record id="vendor_payment_request_view_tree" model="ir.ui.view">
        <field name="name">vendor.payment.request.view.tree</field>
        <field name="model">vendor.payment.request</field>
        <field name="arch" type="xml">
            <tree>
                <!-- Add your fields here -->
                <field name="name" decoration-bf="1"/>
                <field name="user_id"/>
                <field name="description"/>
                <field name="state"/>
                <field name="branch_id"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <!-- Vendor Payment Request form view -->
    <record id="vendor_payment_request_view_form" model="ir.ui.view">
        <field name="name">vendor.payment.request.view.form</field>
        <field name="model">vendor.payment.request</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <button string="Confirm" name="button_confirm" type="object" class="oe_highlight" states="draft"/>
                    <button string="Mark as Done" name="button_done" type="object" class="oe_highlight" states="in_progress" />
                    <button string="Cancel" name="button_cancel" type="object" class="oe_highlight" states="draft,in_progress"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_id" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="description" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                        <group>
                            <field name="create_date" readonly="1" force_save="1"/>
                            <field name="create_uid" readonly="1" force_save="1"/>
                            <field name="company_id" readonly="1" force_save="1"/>
                            <field name="branch_id" force_save="1" options="{'no_create':True,'no_create_edit':True}"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="component_line_id" string="Component Lines">
                            <field name="component_line_id" context="{'component_line_id': component_line_id}"
                                attrs="{'readonly':[('state','!=','draft')]}">
                                <tree>
                                    <field name="sequence" readonly="1" force_save="1"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="purchase_order_id" required="1"/>
                                    <field name="description"/>
                                    <field name="amount_total" readonly="1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="payable_amount"/>
                                    <field name="file_name" string="Attachment"/>
                                    <button name="%(dev_purchase_down_payment.action_dev_purchase_down_payment)d"
                                            string="Create Bill" type="action"
                                            context="{'create_bill':True, 'active_id':purchase_order_id}"
                                            class="btn-primary"/>
                                    <button type="object" name="view_bill" string="View Bill" class="btn-primary" />
                                </tree>
                                <form string="Component Lines">
                                    <group>
                                        <group>
                                           <field name="sequence" readonly="1" force_save="1" invisible="1"/>
                                           <field name="currency_id" invisible="1"/>
                                           <field name="purchase_order_id"/>
                                           <field name="description"/>
                                           <field name="amount_total" readonly="1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                            <field name="payable_amount"/>
                                        </group>
                                        <group>
                                            <field name="attachment_file" filename="file_name"/>
                                            <field name="file_name" invisible="1"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                    <group class="oe_subtotal_footer oe_right" colspan="2">
                        <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                            <label for="amount_total"/>
                        </div>
                        <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    </group>
                    <div class="oe_clear"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- service.work.order action window -->
    <record id="vendor_payment_request_action" model="ir.actions.act_window">
        <field name="name">Purchase Order Payment Request</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">vendor.payment.request</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_vendor_payment_request" name="Purchase Order Payment Request"
          action="vendor_payment_request_action"
          parent="main_menu_goods_purchase_order" sequence="8"/>

    <menuitem id="purchase_request.menu_purchase_request_pro_mgt"
          parent="main_menu_goods_purchase_request"
          name="Purchase Requests"/>

    <menuitem id="purchase.menu_purchase_form_action"
          parent="main_menu_goods_purchase_order"
          name="Purchase Orders"/>

    <menuitem id="purchase.menu_purchase_rfq"
          parent="main_menu_goods_purchase_order"
          name="Requests for Quotation"/>

    <menuitem id="purchase_request.menu_purchase_request_line"
          parent="main_menu_goods_purchase_request"
          name="Purchase Request Lines"
          active="False"
    />

    <menuitem id="menu_vendor_payment_request_account" name="Purchase Order Payment Request"
        action="vendor_payment_request_action" parent="account.menu_finance_payables" sequence="5"/>

    <menuitem id="menu_vendor_payment_request_order" name="Purchase Order Payment Request"
        action="vendor_payment_request_action" parent="equip3_purchase_operation.main_menu_orders_purchase_order" sequence="4"/>
</odoo>