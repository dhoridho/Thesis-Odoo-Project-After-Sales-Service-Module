<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_accounting_masterdata_inherit" model="ir.ui.view">
        <field name="name">view.move.form.accounting.masterdata.inherit</field>
        <field name="model">account.move</field>
        <field name="priority">20</field>
        <field name="inherit_id" ref="equip3_accounting_masterdata.view_move_form_inherit_accounting_masterdata"/>
        <field name="arch" type="xml">
            <xpath expr="//group/group[@id='header_left_group']/field[@name='partner_id']" position="attributes">
                <attribute name="options">{'no_create':True,
                    'no_create_edit':True}</attribute>
            </xpath>
            <xpath expr="//group/div/div/div[@name='col_1']/group[@name='col_1']/field[@name='partner_shipping_id']" position="attributes">
                <attribute name="options">{'no_create':True,
                    'no_create_edit':True}</attribute>
            </xpath>
            <xpath expr="//group/group[@id='header_right_group']/div[hasclass('d-flex')]/field[@name='invoice_payment_term_id']" position="attributes">
                <attribute name="options">{'no_create':True,
                    'no_create_edit':True}</attribute>
            </xpath>
            <xpath expr="//group/div/div/div[@name='col_1']/group/field[@name='analytic_group_ids']" position="attributes">
                <attribute name="options">{'no_create':True,
                    'no_create_edit':True}</attribute>
            </xpath>
            <xpath expr="//group/div/div/div[@name='col_2']/group/field[@name='partner_bank_id']" position="attributes">
                <attribute name="invisible">0</attribute>
                <attribute name="options">{'no_create':True,
                    'no_create_edit':True}</attribute>
            </xpath>
            <xpath expr="//notebook/page[@id='other_tab']/group/group/field[@name='partner_bank_id']" position="attributes">
                <attribute name="options">{'no_create':True,
                    'no_create_edit':True}</attribute>
            </xpath>
        </field>
    </record>
    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total'][1]" position="before">
                <field name="swo" invisible="1"/>
                <field name="is_services_orders" invisible="1"/>
                <field name="amount_swo" attrs="{'invisible': ['|','|', ('is_down_payment', '=', False), ('swo', '=', False), ('is_services_orders', '=', False)]}"/>
            </xpath>
            <xpath expr="//field[@name='down_payment_amount']" position="attributes">
                <attribute name="attrs"></attribute>
            </xpath>
        </field>
    </record>
</odoo>