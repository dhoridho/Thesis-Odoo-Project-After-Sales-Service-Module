<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- Add you code here -->
        <!-- service.work.order search view -->
        <record id="service_work_order_view_search" model="ir.ui.view">
            <field name="name">service.work.order.view.search</field>
            <field name="model">service.work.order</field>
            <field name="arch" type="xml">
                <search string="">
                    <!-- Add your fields here -->
                    <field name="name"/>
                    <field name="branch_id"/>
                    <field name="partner_id"/>
                    <field name="origin"/>
                </search>
            </field>
        </record>

        <!-- service.work.order form view -->
        <record id="service_work_order_view_form" model="ir.ui.view">
            <field name="name">service.work.order.view.form</field>
            <field name="model">service.work.order</field>
            <field name="arch" type="xml">
                <form string="" create="0">
                    <header>
                        <button string="Confirm" name="button_confirm" type="object" class="oe_highlight" states="draft"/>
                        <button string="Mark as Done" name="button_done" type="object" class="oe_highlight" states="confirm"/>
                        <button name="button_open_whatsapp" string="Open In Whatsapp" type="object" class="btn-secondary" icon="fa-whatsapp" style="background-color:#b7ff8a" states="confirm"/>
                        <button string="Cancel" name="button_cancel" type="object" class="" states="draft,confirm"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_journal_items" string="Journal Items" type="object" class="oe_stat_button" icon="o-hm-smart-all-vendor-bill" attrs="{'invisible': [('account_move_count', '&lt;=', 0)]}"/>
                        </div>

                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="account_analytic_tag_ids" widget="many2many_tags"/>
                                <field name="milestone_name"/>
                                <label for="contract_term"/>
                                <div class="o_row" name="contract_term">
                                    <field name="contract_term"/>
                                    <span>%</span>
                                </div>
                                <label for="progress_paid"/>
                                <div class="o_row" name="progress_paid">
                                    <field name="progress_paid" readonly="1" force_save="1"/>
                                    <span>%</span>
                                </div>
                                <field name="company_id"/>
                                <field name="branch_id"/>
                                <field name="account_move_count" invisible="1"/>
                            </group>
                            <group>
                                <field name="create_date"/>
                                <field name="create_uid"/>
                                <field name="date_planned"/>
                                <field name="deadline_date" attrs="{'readonly':[('state','=','done')]}"/>
                                <field name="origin" attrs="{'readonly':[('state','=','done')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="products" string="Products">
                                <field name="order_line" attrs="{'readonly':[('state','=','done')]}">
                                    <tree editable="bottom" create="false">
                                        <field name="sequence2"/>
                                        <field name="product_id"/>
                                        <field name="description"/>
                                        <field name="account_analytic_tag_ids" widget="many2many_tags"/>
                                        <field name="state" invisible="1"/>
                                        <field name="state2" readonly="1" force_save="1"/>
                                        <button string="Complete" name="btn_check" type="object" icon="fa-check" attrs="{'invisible':['|',('state2','=','completed'),('state','=','done')]}" />
                                        <button string="Cancel" name="btn_close" type="object" icon="fa-close" attrs="{'invisible':['|',('state2','=','cancelled'),('state','=','done')]}" />
                                    </tree>
                                </field>
                            </page>
                            <page name="checklist" string="Checklist">
                                <field name="checklist_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="desc"/>
                                        <field name="state" invisible="1"/>
                                        <field name="state2" readonly="1" force_save="1"/>
                                        <button string="Complete" name="btn_check" type="object" icon="fa-check" attrs="{'invisible':['|',('state2','=','completed'),('state','=','done')]}" />
                                        <button string="Cancel" name="btn_close" type="object" icon="fa-close" attrs="{'invisible':['|',('state2','=','cancelled'),('state','=','done')]}" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- service.work.order tree view -->
        <record id="service_work_order_view_tree" model="ir.ui.view">
            <field name="name">service.work.order.view.tree</field>
            <field name="model">service.work.order</field>
            <field name="arch" type="xml">
                <tree create="0">
                    <!-- Add your fields here -->
                    <field name="name" decoration-bf="name != False"/>
                    <field name="milestone_name"/>
                    <field name="contract_term"/>
                    <field name="partner_id"/>
                    <field name="date_planned"/>
                    <field name="origin"/>
                    <field name="state" decoration-success="state == 'done'"
                       decoration-info="state != 'done'" widget="badge"/>
                    <field name="branch_id"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <!-- service.work.order action window -->
        <record id="service_work_order_action" model="ir.actions.act_window">
            <field name="name">Service Work Order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">service.work.order</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p><p>
                    <!-- More details about what a user can do with this object will be OK --> 
                </p>
            </field>
        </record>
    </data>
</odoo>