<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_purchase_config_cancel_form_inherit" model="ir.ui.view">
        <field name="name">purchase.config.cancel.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sh_all_in_one_purchase_tools.sh_purchase_config_cancel_form_inherit" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='purchase']/div[3]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
    <record id="sh_purchase_config_purchase_revisions_form_inherit_reference_formatting" model="ir.ui.view">
        <field name="name">sh.purchase.config.purchase.revisions.form.inherit.reference.formatting</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sh_purchase_revisions.sh_purchase_config_purchase_revisions_form_inherit" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='purchase']/div[2]/div" position="inside">
                <div class="row mt16 o_settings_container" attrs = "{'invisible' : [('sh_purchase_revision', '=', False)]}">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <label for="reference_formatting"/>
                        <field name="reference_formatting" widget="radio" readonly="False"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    <record id="view_form_res_config_settings_vendor_purchase" model="ir.ui.view">
        <field name="name">res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='automatic_lock_confirmed_orders']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@name='purchase_setting_container']" position="after">
                <div class="app_settings_block">
                    <h2>Vendor Purchase Limit</h2>
                    <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane"></div>
                    <div class="o_setting_right_pane">
                        <label for="vendor_purchase_limit" />
                        <div class="text-muted">
                            Default Vendor purchase limit (set the default purchase limit amount for new vendor)
                        </div>
                        <div class="mt8">
                            <field name="vendor_purchase_limit" />
                        </div>
                    </div>
                    </div>
                </div>
                </div>
            </xpath>
            <xpath expr="//div[@id='purchase_document']" position="inside">
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_email_notification" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_email_notification" string="Email Notification for Purchase Order Approval" />
                            <div class="text-muted">
                                If is checked , it will be send an Email notification to all Purchase Order Approver
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_whatsapp_notification" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_whatsapp_notification" string="Whatsapp Notification for Purchase Order Approval" />
                            <div class="text-muted">
                                If is checked , it will be send an Whatsapp notification to all Purchase Order Approver
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <field name="pr_order_average_price" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="pr_order_average_price" string="Purchase Order Average Price" />
                            <div class="text-muted">
                                Purchase Order Average Price
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_purchase_vendor_rating_warning" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_purchase_vendor_rating_warning" string="Purchase Order Vendor Rating Warning" />
                            <div class="text-muted">
                                If is checked , it will be show an Warning when vendor not recommended
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>