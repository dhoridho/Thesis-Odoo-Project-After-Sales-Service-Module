<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- MERGE PURCHASE ORDERS WIZARDS-->
    <record id="sh_merge_purchase_order_wizard_form_inherit" model="ir.ui.view">
        <field name="name">sh.merge.purchase.order.wizard.form.inherit</field>
        <field name="model">sh.mpo.merge.purchase.order.wizard</field>        
        <field name="inherit_id" ref="sh_all_in_one_purchase_tools.sh_merge_purchase_order_wizard_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/group/group/field[@name='partner_id']" position="attributes">
                <attribute name="context">{'res_partner_search_mode': 'supplier', 'show_vat': True,
                                           'tree_view_ref': 'equip3_purchase_operation.view_res_partner_line_tree',
                                           'default_is_vendor': 1,
                                           'search_default_supplier': 1}</attribute>            
            </xpath>
            <xpath expr="//form/group/group" position="inside">
                <field name="merge_option" widget="radio"/>
            </xpath>
        </field>
    </record>
</odoo>    