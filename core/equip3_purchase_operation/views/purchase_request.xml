<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- purchase.request inherit form view -->
    <record id="purchase_request_view_form_inherit" model="ir.ui.view">
        <field name="name">purchase.request.inherit.view.form</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/div[@name='button_box']/button[@name='action_view_purchase_request_line']" position="attributes">
                <attribute name="icon">o-hm-smart-all-purchase-request-lines</attribute>
            </xpath>
            <xpath expr="//sheet/div[@name='button_box']/button[@name='action_view_purchase_order']" position="attributes">
                <attribute name="icon">o-hm-smart-all-purchased</attribute>
            </xpath>
            <field name="requested_by" position="attributes">
                <attribute name="options">{'no_create':True,
                                           'no_create_edit':True}</attribute>
            </field>
            <field name="branch_id" position="attributes">
<!--                <attribute name="readonly">1</attribute>-->
<!--                <attribute name="force_save">1</attribute>-->
                <attribute name="options">{'no_create':True,
                                           'no_create_edit':True}</attribute>
            </field>
            <field name="analytic_account_group_ids" position="attributes">
                <attribute name="options">{'no_create':True,
                                           'no_create_edit':True}</attribute>
            </field>
            <!-- <field name="destination_warehouse" position="attributes">
                <attribute name="domain">filter_destination_warehouse</attribute>
                <attribute name="options">{'no_create':True,
                                           'no_create_edit':True}</attribute>
            </field> -->
            <field name="group_id" position="attributes">
                <attribute name="invisible">1</attribute>
                <attribute name="options">{'no_create':True,
                                           'no_create_edit':True}</attribute>
            </field>
            <xpath expr="//field[@name='line_ids']//form//field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_create':True,
                                           'no_create_edit':True}</attribute>
            </xpath>
            <xpath expr="//field[@name='line_ids']//form//field[@name='product_uom_id']" position="attributes">
                <attribute name="options">{'no_create':True,
                                           'no_create_edit':True}</attribute>
            </xpath>
            <xpath expr="//field[@name='line_ids']//form//field[@name='analytic_account_group_ids']" position="attributes">
                <attribute name="options">{'no_create':True,
                                           'no_create_edit':True}</attribute>
            </xpath>
        </field>
    </record>
</odoo>