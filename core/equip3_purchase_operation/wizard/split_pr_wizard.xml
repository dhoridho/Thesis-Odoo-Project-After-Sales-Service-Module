<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_wizard_split_pr_wizard" model="ir.ui.view">
        <field name="name">split.pr.wizard</field>
        <field name="model">split.pr.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="pr_line_id" invisible="1"/>
                    <field name="product_qty" invisible="1"/>
                </group>
                <notebook>
                    <page name="line_ids" string="Purchase Requests">
                        <field name="line_ids" context="{'default_pr_line_id':pr_line_id}">
                            <tree editable="bottom">
                                <field name="pr_line_id" invisible="1"/>
                                <field name="name" force_save="1"/>
                                <field name="product_id" force_save="1"/>
                                <field name="user_id" force_save="1"/>
                                <field name="new_user_id"/>
                                <field name="product_qty"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button name="action_submit" string="Submit" type="object" class="oe_highlight"/>
                    <button string="Cancel" special='cancel' class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_split_pr" model="ir.actions.act_window">
        <field name="name">Split PR</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">split.pr.wizard</field>
        <field name="view_mode">form</field>
        <field name="binding_view_types">form</field>
        <field name="context">{'default_pr_line_id': active_id}</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_purchase_request_line"/>
    </record>
</odoo>
