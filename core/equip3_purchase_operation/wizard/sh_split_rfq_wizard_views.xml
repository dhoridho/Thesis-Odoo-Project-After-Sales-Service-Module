<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sh_split_rfq_wizard_view" model="ir.ui.view">
        <field name="model">sh.split.rfq.wizard</field>
        <field name="inherit_id" ref="sh_all_in_one_purchase_tools.sh_split_rfq_wizard_view" />
        <field name="arch" type="xml">
            <xpath expr="//group" position="after">
                <notebook>
                    <page string="Product Line">
                        <field name="ps_order_ids">
                            <tree editable="bottom" create="false" delete="false">
                                <field name="tick"></field>
                                <field name="sequence" readonly="1" force_save="1"/>
                                <field name="product_template_id" readonly="1" force_save="1"/>
                                <field name="name" readonly="1" force_save="1"/>
                                <field name="date_planned" readonly="1" force_save="1"/>
                                <field name="destination_warehouse_id" readonly="1" force_save="1"/>
                                <field name="product_qty" readonly="1" force_save="1"/>
                                <field name="price_unit" readonly="1" force_save="1"/>
                                <field name="product_uom" invisible="1"/>
                                <field name="product_id" invisible="1"/>
                                <field name="split_id" invisible="1"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>

</odoo>
