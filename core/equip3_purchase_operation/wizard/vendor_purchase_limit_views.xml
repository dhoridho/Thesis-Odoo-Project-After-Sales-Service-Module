<?xml version ="1.0" encoding="utf-8" ?>
<odoo>
    <record id="purchase_order_partner_credit_limit_form" model="ir.ui.view">
        <field name="name">purchase.order.partner.credit.form</field>
        <field name="model">purchase.order.partner.credit</field>
        <field name="arch" type="xml">
            <form string="Vendor Purchase Limit">
                <sheet>
                    <group>
                        <group>
                            <field name="name" invisible="1" />
                            <field name="order_partner" />
                            <field name="vendor_credit_limit" />
                            <field name="is_set_vendor_onhold" />
                        </group>
                        <group>
                            <field name="total_payable" />
                            <field name="current_order" />
                            <field name="purchase_orders_cnt_amt" />
                            <field name="cust_invoice_cnt_amt" />
                        </group>
                    </group>
                    <footer>
                        <button string="Confirm" name="confirm_purchase_order" type="object" default_focus="1" class="btn-primary" groups="equip3_purchase_operation.group_purchase_order_onhold"/>
                        <button string="On Hold" name="action_on_hold_purchase_order" type="object" class="btn-default"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
