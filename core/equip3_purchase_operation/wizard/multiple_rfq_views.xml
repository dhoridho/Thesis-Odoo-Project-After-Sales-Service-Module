<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_wizard_multiple_rfq" model="ir.ui.view">
        <field name="name">multiple.rfq.wizard</field>
        <field name="model">multiple.rfq</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="vendor_ids" widget="many2many_tags" required="1" context="{'res_partner_search_mode': 'supplier',
                        'tree_view_ref': 'equip3_purchase_operation.view_res_partner_tree', 
                        'default_is_vendor': 1,
                        'search_default_supplier': 1}" options="{'no_create':True,'no_create_edit':True}"/>
                    </group>
                    <group>
                        <field name="product_ids" widget="many2many_tags" required="1"/>
                    </group>
                </group>
                <footer>
                    <button name="create_rfq" string="Create RFQ" type="object" class="oe_highlight"/>
                    <button string="Cancel" special='cancel' class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="sh_po_tender_management.sh_generate_purchase_order_action" model="ir.actions.act_window">
        <field name="binding_view_types">list</field>
    </record>   

    <record id="multiple_rfq_form_action" model="ir.actions.act_window">
        <field name="name">Create Multiple RFQ</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">multiple.rfq</field>
        <field name="view_mode">form</field>
        <field name="context">{'is_goods_order': 1}</field>
        <field name="target">new</field>
    </record>    
    <menuitem id="menu_multiple_create_rfq" name="Create Multiple RFQ" action="multiple_rfq_form_action"
    parent="main_menu_goods_purchase_order" sequence="3" />

    <record id="action_multiple_service" model="ir.actions.act_window">
        <field name="name">Create Multiple RFQ</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">multiple.rfq</field>
        <field name="view_mode">form</field>
        <field name="context">{'services_good': 1}</field>
        <field name="target">new</field>
    </record>
    <menuitem id="menu_multiple_rfq" name="Create Multiple RFQ" action="action_multiple_service"
        parent="equip3_purchase_operation.main_menu_services_purchase_order" sequence="3" />

</odoo>
