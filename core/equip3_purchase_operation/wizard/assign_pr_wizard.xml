<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_wizard_assign_pr_wizard" model="ir.ui.view">
        <field name="name">assign.pr.wizard</field>
        <field name="model">assign.pr.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="pr_ids" widget="many2many_tags" invisible="1"/>
                </group>
                <notebook>
                    <page name="line_ids" string="Purchase Requests">
                        <field name="line_ids">
                            <tree editable="bottom" create="false" delete="false">
                                <field name="pr_line_id" invisible="1"/>
                                <field name="name" force_save="1"/>
                                <field name="product_id" force_save="1"/>
                                <field name="user_id" force_save="1"/>
                                <field name="new_user_id"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button name="action_submit" string="Submit" type="object" class="oe_highlight"/>
                    <button string="Cancel" special='cancel' class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_assign_pr" model="ir.actions.act_window">
        <field name="name">Assign/Re-Assign PR</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">assign.pr.wizard</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_pr_ids': active_ids}</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_purchase_request_line"/>
    </record>
</odoo>
