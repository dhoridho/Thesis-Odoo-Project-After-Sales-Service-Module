<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="close_purchase_order_form_view" model="ir.ui.view">
        <field name="name">close.purchase.order.form.view</field>
        <field name="model">close.purchase.order</field>
        <field name="arch" type="xml">
            <form>
                <script>
                    $(document).ready(function(){
                    $('.ui-dialog').css({'width': '1000px', 'left':'166px'});
                    $('.oe_form_sheet_width').css({'MAXwidth': '1000px'});
                    });
                </script>
                <field name="purchase_id" invisible="1"/>
                <div>
                    <span>Are you sure you want to close the PO? Once it closed, it cannot be changed again.</span>
                </div>
                <footer>
                    <button name="close_purchase_order" string="Ok" type="object" class="oe_highlight"/>
                    Or
                    <button string="No" special='cancel' class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
