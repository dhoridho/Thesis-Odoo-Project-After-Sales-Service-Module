<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="extract_rfq_wizard_view" model="ir.ui.view">
        <field name="name">extract.rfq.wizard</field>
        <field name="model">extract.rfq.wizard</field>
        <field name="arch" type="xml">
            <form string="Extract Split RFQ">
                <notebook>
                    <page string="Product Line">
                        <field name="purchase_order_extract_ids">
                            <tree editable="bottom" create="false" delete="false">
                                <field name="tick"></field>
                                <field name="sequence" readonly="1" force_save="1"/>
                                <field name="product_template_id" readonly="1" force_save="1"/>
                                <field name="name" readonly="1" force_save="1"/>
                                <field name="date_planned" readonly="1" force_save="1"/>
                                <field name="destination_warehouse_id" readonly="1" force_save="1"/>
                                <field name="product_qty" readonly="1" force_save="1"/>
                                <field name="price_unit" readonly="1" force_save="1"/>
                                <field name="extract_id" invisible="1"/>
                                <field name="product_id" invisible="1"/>
                                <field name="product_uom" invisible="1"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button string="Extract RFQ" type="object" name="action_extract_rfq" class="btn-primary" />
                    <button name="cancel" string="Cancel" special="cancel" class="oe_link" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
