<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">


    <t t-name="KitchenReceiptScreen" owl="1">
        <div class="receipt-screen screen">
            <div class="screen-content">
                <div class="top-content">
                    <div class="button back">
                        <i class="fa fa-angle-double-left fa-fw"></i>
                        <span class="back_text" t-on-click="confirm">Back</span>
                    </div>
                    <div class="top-content-center">
                    <h1>Payment</h1>
                    </div>
                    <div class="button next" t-att-class="{ highlight: !locked }">
                    <span class="next_text" t-on-click="New_Order">New Order</span>
                    <i class="fa fa-angle-double-right fa-fw"></i>
                    </div>
                </div>
                <div class="default-view">
                    <div class="pos-receipt-container">
                        <t t-if="env.pos.config.receipt_types_views == 'labelReceipt'">
                            <t t-if="changes.cancelled.length > 0">
                                <t t-foreach="changes.cancelled" t-as="labelReceipt">
                                <LabelReceiptCancelled changes="props.changes" category_receipt="labelReceipt" t-ref="label-receipt" />
                                </t>
                            </t>
                            <t t-if="changes.new.length > 0">
                                <t t-foreach="changes.new" t-as="labelReceipt">
                                <LabelReceiptNew changes="props.changes" category_receipt="labelReceipt" t-ref="label-receipt" />
                                </t>
                            </t>
                        </t>
                        <t t-if="env.pos.config.receipt_types_views == 'categoryReceipt' and env.pos.pos_categ_id">
                            <t t-foreach="env.pos.pos_categ_id" t-as="category_receipt" t-key="category_receipt">
                            <t t-set='count_t' t-value='0' />
                            <t t-foreach="computeChanges_orderlines.all" t-as="orderline">
                                <t t-if="orderline.category">
                                    <t t-if="orderline.category == category_receipt">
                                        <t t-set='count_t' t-value='1' />
                                    </t>
                                </t>
                            </t>
                            <t t-if="count_t">
                                <CategoryReceipt changes="props.changes" category_receipt="category_receipt" t-ref="category-receipt" />
                            </t>
                        </t>
                        </t>
                    </div>
                    <div class="actions">
                        <h1>How would you like to receive your receipt?</h1>
                        <div class="buttons">
                            <div class="button print" t-on-click="printReceipt">
                                <i class="fa fa-print"></i> Print Receipt
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
