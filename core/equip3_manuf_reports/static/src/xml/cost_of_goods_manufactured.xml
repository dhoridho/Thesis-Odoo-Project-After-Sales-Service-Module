<?xml version="1.0" encoding="UTF-8"?>
<template xml:space="preserve">

    <t t-name="COGMContent">
        <table class="o_cogm_section">
            <tbody>
                <t t-foreach="widget.data" t-as="data">
                    <t t-if="data['level'] === 1">
                        <tr class="o_separator">
                            <td t-att-colspan="(data['values'].length * 2) + 1"/>
                        </tr>
                    </t>
                    <tr t-att-class="data['class']" 
                        t-att-data-toggle="data['data']['toggle']" 
                        t-att-data-target="data['data']['target']" 
                        t-att-data-section="data['section']">
                        <td t-attf-style="padding-left: {{ 10 * (data['level'] &lt;= 1 ? 0 : data['level'] - 1) }}px;">
                            <t t-esc="data['title']"/>
                            <span t-attf-class="fa fa-caret-right ml-2" t-if="data['children'].length &amp;&amp; data['level'] > 1"/>
                        </td>
                        <t t-if="data['section'] === '0'">
                            <t t-foreach="data['values']" t-as="value">
                                <td class="o_bold" colspan="2">
                                    <t t-esc="value['value']"/>
                                </td>
                            </t>
                        </t>
                        <t t-else="">
                            <t t-foreach="data['values']" t-as="value">
                                <td t-attf-class="{{ data['position'] === 'left' ? 'o_value' : '' }}">
                                    <t t-esc="widget.format_currency(value['value'])" t-if="data['position'] === 'left' &amp;&amp; data['show_values']"/>
                                </td>
                                <td t-attf-class="{{ data['position'] === 'right' ? 'o_value' : '' }}">
                                    <t t-esc="widget.format_currency(value['value'])" t-if="data['position'] === 'right' &amp;&amp; data['show_values']"/>
                                </td>
                            </t>
                        </t>
                    </tr>
                </t>
            </tbody>
        </table>
    </t>

    <t t-name="CostOfGoodsManufactured">
        <div class="o_cost_of_goods_manufactured">
                
            <div class="o_cogm_title">
                <h1>Cost of Goods Manufactured</h1>
            </div>

            <div class="o_cogm_buttons">
                <div class="o_button_left">

                </div>
                <div class="o_button_right">
                    
                    <button class="btn btn-primary o_cogm_filters">
                        <span class="fa fa-search"/> Filters
                    </button>
                    <div class="o_ocgm_filter_content d-none">
                        <p>Filter Option</p>
                        <hr/>
                        <div class="o_filter o_date_filter" data-filter="date">
                            <div class="btn-group">
                                <a type="button" class="dropdown-item o_dropdown_toggler" data-toggle="dropdown">
                                    <span class="fa fa-calendar mr-2"/>
                                    <span>Date</span>
                                    <span class="current_filter"><t t-esc="widget.filters.date[1]"/></span>
                                    <span class="fa fa-caret-down ml-2"></span>
                                </a>
                                <ul class="dropdown-menu o_dropdown_menu" role="menu" >
                                    <li class="o_filter_select" title="This Month" data-value="this_month"><a t-attf-class="dropdown-item {{ widget.filters.date[0] === 'this_month' ? 'selected' : '' }}">This Month</a></li>
                                    <li class="o_filter_select" title="This Quarter" data-value="this_quarter"><a t-attf-class="dropdown-item {{ widget.filters.date[0] === 'this_quarter' ? 'selected' : '' }}">This Quarter</a></li>
                                    <li class="o_filter_select" title="This Financial Year" data-value="this_year"><a t-attf-class="dropdown-item {{ widget.filters.date[0] === 'this_year' ? 'selected' : '' }}">This Financial Year</a></li>
                                    <li role="separator" class="dropdown-divider"></li>
                                    <li class="o_filter_select" title="Last Month" data-value="last_month"><a t-attf-class="dropdown-item {{ widget.filters.date[0] === 'last_month' ? 'selected' : '' }}">Last Month</a></li>
                                    <li class="o_filter_select" title="Last Quarter" data-value="last_quarter"><a t-attf-class="dropdown-item {{ widget.filters.date[0] === 'last_quarter' ? 'selected' : '' }}">Last Quarter</a></li>
                                    <li class="o_filter_select" title="Last Financial Year" data-value="last_year"><a t-attf-class="dropdown-item {{ widget.filters.date[0] === 'last_year' ? 'selected' : '' }}">Last Financial Year</a></li>
                                    <li role="separator" class="dropdown-divider"></li>
                                    <li class="o_filter_select o_open" title="Custom" data-value="custom" data-open=".o_custom_date"><a t-attf-class="dropdown-item {{ widget.filters.date[0] === 'custom' ? 'selected' : '' }}">Custom</a></li>
                                    <li class="o_filter_select d-none o_drop o_custom_date">
                                        <div class="dropdown-item-text">
                                            <div>
                                                <input type="date" class="o_custom_date_from"/>
                                            </div>
                                            <div>
                                                <label>To Date :</label>
                                                <input type="date" class="o_custom_date_to"/>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="o_filter o_comparison_filter" data-filter="comparison">
                            <div class="btn-group">
                                <a type="button" class="dropdown-item o_dropdown_toggler" data-toggle="dropdown">
                                    <span class="fa fa-exchange mr-2"/>
                                    <span>Comparison</span>
                                    <span class="current_filter"><t t-esc="widget.filters.comparison[1]"/></span>
                                    <span class="fa fa-caret-down ml-2"/>
                                </a>
                                <ul class="dropdown-menu o_dropdown_menu" role="menu" >
                                    <li class="o_filter_select" title="No Comparison" data-value="no_comparison"><a t-attf-class="dropdown-item {{ widget.filters.comparison[0] === 'no_comparison' ? 'selected' : '' }}">No Comparison</a></li>
                                    <li role="separator" class="dropdown-divider"></li>
                                    <li class="o_filter_select o_open" title="Previous Period" data-value="previous" data-open=".o_nop_previous"><a t-attf-class="dropdown-item {{ widget.filters.comparison[0] === 'previous' ? 'selected' : '' }}">Previous Period</a></li>
                                    <li class="o_filter_select d-none o_drop o_nop_previous">
                                        <div class="dropdown-item-text">
                                            <span>Number of Period:</span>
                                            <input type="text" class="o_previous_no_of_periods"/>
                                        </div>
                                    </li>
                                    <li class="o_filter_select o_open" title="Same Period Last Year" data-value="same" data-open=".o_nop_same"><a t-attf-class="dropdown-item {{ widget.filters.comparison[0] === 'same' ? 'selected' : '' }}">Same Period Last Year</a></li>
                                    <li class="o_filter_select d-none o_drop o_nop_same">
                                        <div class="dropdown-item-text">
                                            <span>Number of Period:</span>
                                            <input type="text" class="o_same_no_of_periods"/>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="o_buttons">
                            <button class="btn btn-primary btn-sm o_apply_filter">Apply</button>
                        </div>
                    </div>

                    <button class="btn btn-primary o_cogm_print_pdf">PDF</button>
                    <button class="btn btn-primary o_cogm_print_xlsx">XLSX</button>
                    <button class="btn btn-primary o_cogm_expand">Expand</button>
                </div>
            </div>

            <div class="o_cogm_content">
                <t t-call="COGMContent"/>
            </div>
        </div>
    </t>

</template>