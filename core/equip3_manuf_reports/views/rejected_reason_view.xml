<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_reason_rejected_material_report_tree" model="ir.ui.view">
        <field name="name">reason.material.report.tree</field>
        <field name="model">mrp.reason.rejected</field>
        <field name="arch" type="xml">
            <tree string="Reason Rejected">
                <field name="reason" />
            </tree>
        </field>
    </record>

  
    <record id="view_reason_rejected_material_report_form" model="ir.ui.view">
        <field name="name">reason.material.report.form</field>
        <field name="model">mrp.reason.rejected</field>
        <field name="arch" type="xml">
            <form string="Reason Rejected">
                <sheet>
                    <group>
                        <field name="reason" class="oe_inline"/>
                    </group>                       
                </sheet>
            </form>
        </field>
    </record>
  
    <record id="action_reason_rejected_material_report" model="ir.actions.act_window">
        <field name="name">Reason</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.reason.rejected</field>
        <field name="view_mode">tree,form</field>
        <field name="help">Create Reason(s)</field>
    </record>

    <menuitem 
        id="menu_mrp_rejected_reason" 
        name="Reason"
        action="action_reason_rejected_material_report" 
        parent="equip3_manuf_other_operations.mrp_configuration_menu_act" 
        sequence="130"
    />
</odoo>
