<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_moving_production_cost_report_tree" model="ir.ui.view">
        <field name="name">view.moving.production.cost.report.tree</field>
        <field name="model">moving.production.cost.report</field>
        <field name="arch" type="xml">
            <tree string="Moving Production Cost Report" create="0">
                <field name="bom_id"/>
                <field name="product_id"/>
                <field name="last_production_date"/>
                <field name="last_production_id"/>
                <field name="last_cost_per_uom"/>
                <field name="uom_id"/>
                <field name="last_cost_per_secondary_uom" optional="hide"/>
                <field name="secondary_uom_id" optional="hide"/>
                <field name="company_id" invisible="1"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_moving_production_cost_report_form" model="ir.ui.view">
        <field name="name">view.moving.production.cost.report.form</field>
        <field name="model">moving.production.cost.report</field>
        <field name="arch" type="xml">
            <form string="Moving Production Cost Report" edit="0" create="0" js_class="moving_production_cost_report">
                <sheet>
                    <group invisible="1">
                        <group>
                            <field name="bom_id"/>
                            <field name="product_id"/>
                            <field name="last_production_date"/>
                            <field name="last_production_id"/>
                            <field name="production_ids" widget="many2many"/>
                            <field name="last_cost_per_uom"/>
                        </group>
                        <group>
                            <field name="uom_id"/>
                            <field name="last_cost_per_secondary_uom"/>
                            <field name="secondary_uom_id"/>
                            <field name="company_id"/>
                            <field name="currency_id"/>
                        </group>
                    </group>

                    <group invisible="1">
                        <field name="report_data"/>
                    </group>

                    <group invisible="1">
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    
                    <div class="o_bom_material_chart_container">
                        <canvas id="o_bom_material_chart"/>
                    </div>
                    <div class="o_bom_material_chart_legend"/>
                    <div class="o_bom_material"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_moving_production_cost_report" model="ir.actions.act_window">
        <field name="name">Moving Production Cost Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">moving.production.cost.report</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No data yet!
            </p>
            <p>
                Try create a new Production Order
            </p>
        </field>
    </record>

</odoo>