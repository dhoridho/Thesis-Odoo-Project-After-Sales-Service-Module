<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mrp_subcon_report_tree" model="ir.ui.view">
        <field name="name">view.mrp.subcon.report.tree</field>
        <field name="model">mrp.subcontracting.report</field>
        <field name="arch" type="xml">
            <tree string="Stock On Hand" create="0">
                <field name="product_id"/>
                <field name="location_id"/>
                <field name="partner_id"/>
                <field name="lot_id" groups="stock.group_production_lot"/>
                <field name="package_id"/>
                <field name="owner_id"/>
                <field name="quantity" sum="Total On Hand Quantity"/>
                <field name="available_quantity" sum="Total Available Quantity"/>
                <field name="product_uom_id" options="{'no_open': True, 'no_create': True}" groups="uom.group_uom"/>
                <field name="value" sum="Total Value"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_mrp_subcon_report_pivot" model="ir.ui.view" >
        <field name="name">view.mrp.subcon.report.pivot</field>
        <field name="model">mrp.subcontracting.report</field>
        <field name="arch" type="xml">
            <pivot string="Stonck On Hand" sample="1">
                <field name="product_id" type="row"/>
                <field name="location_id" type="col"/>
                <field name="quantity" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="view_mrp_subcon_report_graph" model="ir.ui.view">
        <field name="name">view.mrp.subcon.report.graph</field>
        <field name="model">mrp.subcontracting.report</field>
        <field name="arch" type="xml">
            <graph string="Stock On Hand" sample="1">
                <field name="location_id"/>
                <field name="partner_id"/>
                <field name="quantity" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="view_mrp_subcon_report_search" model="ir.ui.view">
        <field name="name">view.mrp.subcon.report.search</field>
        <field name="model">mrp.subcontracting.report</field>
        <field name="arch" type="xml">
            <search string="Stock On Hand">
                <field name="product_id"/>
                <field name="lot_id" groups="stock.group_production_lot"/>
                <field name="location_id" groups="stock.group_stock_multi_locations"/>
                <field name="partner_id"/>

                <group expand='0' string='Filters'>
                    <filter name='internal_loc' string="Internal Locations" domain="[('location_id.usage','=', 'internal')]"/>
                    <filter name='transit_loc' string="Transit Locations" domain="[('location_id.usage' ,'=', 'transit')]"/>
                    <separator/>
                    <filter name="negative" string="Negative Stock" domain="[('quantity', '&lt;', 0.0)]"/>
                    <filter name="positive" string="Positive Stock" domain="[('quantity', '&gt;', 0.0)]"/>
                    <separator/>
                    <filter name="has_partner_id" string="Vendor" domain="[('partner_id', '!=', False)]"/>
                </group>

                <group expand="0" string="Group By">
                    <filter string="Product" name="groupby_product_id" domain="[]" context="{'group_by': 'product_id'}"/>
                    <filter string="Location" name="groupby_location_id" domain="[]" context="{'group_by': 'location_id'}"/>
                    <filter string="Lot/Serial Number" name="groupby_lot_id" domain="[]" context="{'group_by': 'lot_id'}"/>
                    <filter string="Vendor" name="groupby_partner_id" domain="[]" context="{'group_by': 'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_view_mrp_subcon_report" model="ir.actions.act_window">
        <field name="name">Subcontracting Report</field>
        <field name="res_model">mrp.subcontracting.report</field>
        <field name="view_mode">tree,pivot,graph</field>
         <field name="context">{
            "search_default_internal_loc": 1,
            "search_default_groupby_location_id": 1,
            "search_default_groupby_product_id": 1
            }
        </field>
        <field name="domain">[('product_id.type', '=', 'product')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Subcontracting Report.
            </p>
        </field>
    </record>

</odoo>