<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ks_mrp_production_view_gantt_inherited" model="ir.ui.view">
        <field name="name">ks.mrp.production.view.gantt.inherited</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="ks_gantt_view_mrp.ks_mrp_production_view_gantt"/>
        <field name="arch" type="xml">
            <xpath expr="//ks_gantt" position="attributes">
                <attribute name="js_class">ks_gantt_production</attribute>
                <attribute name="ks_task_start_date">date_planned_start</attribute>
                <attribute name="ks_task_end_date">date_planned_finished</attribute>
                <attribute name="ks_task_mrp_plan">mrp_plan_id</attribute>
                <attribute name="ks_export_field">[
                    "name",
                    "product_id",
                    "product_qty",
                    "qty_producing",
                    "lot_producing_id",
                    "bom_id",
                    "date_planned_start",
                    "user_id",
                    "company_id",
                    "picking_type_id",
                    "origin",
                    "ks_task_unschedule",
                    "ks_enable_task_duration",
                    "ks_datetime_start",
                    "ks_datetime_end",
                    "ks_task_duration",
                    "ks_schedule_mode",
                    "ks_constraint_task_type",
                    "ks_constraint_task_date",
                    "state",
                    "product_uom_id",
                    "mrp_plan_name"
                  ]</attribute>
            </xpath>
        </field>
    </record>
</odoo>