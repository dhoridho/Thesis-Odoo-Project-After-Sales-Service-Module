<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="item_form_view" model="ir.ui.view">
         <field name="name">ks_dashboard_ninja_item form inherited</field>
         <field name="model">ks_dashboard_ninja.item</field>
         <field name="inherit_id" ref="ks_dashboard_ninja.item_form_view"/>
         <field name="arch" type="xml">
            <xpath expr="//field[@name='ks_chart_measure_field']" position="after">
                <field name="ks_use_custom_label" attrs="{'invisible': [('ks_dashboard_item_type', '!=', 'ks_line_chart')]}"/>
                <field name="ks_custom_label_ids" attrs="{'invisible': [('ks_use_custom_label', '=', False)]}" options="{'link': False, 'unlink': False}">
                    <tree string="Custom Labels" editable="bottom">
                        <field name="field_id" required="1"/>
                        <field name="label" required="1"/>
                    </tree>
                </field>
            </xpath>
        </field>
    </record>

</odoo>