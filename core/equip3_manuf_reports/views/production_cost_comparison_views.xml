<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_production_cost_comparison_tree" model="ir.ui.view">
        <field name="name">view.production.cost.comparison.tree</field>
        <field name="model">production.cost.comparison</field>
        <field name="arch" type="xml">
            <tree string="Production Cost Comparison" expand="1">
                <field name="production_id" invisible="1"/>
                <field name="production_create_date" invisible="1"/>
                <field name="type" invisible="1"/>
                <field name="name"/>
                <field name="uom_name"/>
                <field name="quantity" sum="Total Quantity"/>
                <field name="cost" sum="Total Cost"/>
                <field name="actual_quantity" sum="Total Actual Quantity"/>
                <field name="actual_cost" sum="Total Actual Cost"/>
                <field name="company_id" invisible="1"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_production_cost_comparison_search" model="ir.ui.view">
        <field name="name">view.production.cost.comparison.search</field>
        <field name="model">production.cost.comparison</field>
        <field name="arch" type="xml">
            <search string="Production Cost Comparison">
                <field name="production_id" string="Production Order"/>
                <field name="type" string="Type"/>

                <group expand="0" string="Group By...">
                    <filter string="Month" name="groupby_month" domain="[]" context="{'group_by': 'production_create_date:month'}"/>
                    <filter string="Production Order" name="groupby_production_id" domain="[]" context="{'group_by': 'production_id'}"/>
                    <filter string="Type" name="groupby_type" domain="[]" context="{'group_by': 'type'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_view_production_cost_comparison" model="ir.actions.act_window">
        <field name="name">Production Cost Comparison</field>
        <field name="res_model">production.cost.comparison</field>
        <field name="view_mode">tree</field>
        <field name="search_view_id" ref="view_production_cost_comparison_search"/>
        <field name="context">{
            'search_default_groupby_type': 1, 
            'search_default_groupby_production_id': 1,
            'search_default_groupby_month': 1,
            'production_cost_comparison_order': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                This report performs analysis on your Production Cost.
            </p>
        </field>
    </record>
</odoo>