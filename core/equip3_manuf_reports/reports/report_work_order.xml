<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_report_workorder" model="ir.actions.report">
        <field name="name">Work Order</field>
        <field name="model">mrp.workorder</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">equip3_manuf_reports.report_workorder_template</field>
        <field name="report_file">equip3_manuf_reports.report_workorder</field>
        <field name="binding_model_id" ref="equip3_manuf_operations.model_mrp_workorder" />
        <field name="binding_type">report</field>
    </record>


    <template id="report_workorder_main">
        <t t-call="equip3_manuf_reports.manuf_external_layout">
            <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})" />
            <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color" />
            <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color" />
            <t t-set="company_color" t-value="o.company_id and o.company_id.company_color" />
            <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color" />
            <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color" />
            <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color" />
            <t t-set="text_color" t-value="o.company_id and o.company_id.text_color" />
            <div class="page" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                <div class="oe_structure"/>
                <t t-call="general_template.template_watermark"/>

                <div class="row" style="padding:10px 0px;" valign="top">
                    <table border="0" cellpadding="0" cellspacing="0"
                        t-attf-style="color:#fff; text-transform:capitalize; border: 1px solid #{theme_color or '#000000'};"
                        width="100%">
                        <tr
                            t-attf-style="color: #{theme_text_color or '#000000'}; background-color: #{theme_color or '#000000'};">
                            <td t-attf-style="padding:9px 15px; font-weight:bold;">
                                <strong>Work Order</strong> # <br />
                                <span t-field="o.name" />
                            </td>
                            <td colspan="2"
                                t-attf-style="background-color:#f2f2f2; height:4px; color: #{theme_text_color or '#000000'};" />
                            <td />
                            <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                <span class="text-left">Planned Date:</span>
                                <p class="m-0">
                                    <span t-field="o.date_planned_start" />
                                    <span t-if="o.date_planned_finished"> to </span>
                                    <span t-if="o.date_planned_finished"
                                        t-field="o.date_planned_finished" />
                                </p>
                            </td>
                            <td colspan="2"
                                t-attf-style="background-color:#f2f2f2; height:4px; color: #{theme_text_color or '#000000'};" />
                            <td />
                            <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                <span class="text-left">Status:</span>
                                <br />
                                <p t-field="o.state" />
                            </td>
                            <td colspan="2"
                                t-attf-style="background-color:#f2f2f2; height:4px; color: #{theme_text_color or '#000000'};" />
                            <td />
                            <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                <span class="text-left">Responsible:</span>
                                <br />
                                <p t-field="o.production_id.user_id" />
                            </td>
                            <td colspan="2"
                                t-attf-style="background-color:#f2f2f2; height:4px; color: #{theme_text_color or '#000000'};" />
                            <td />
                            <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                <span class="text-left">Work Center:</span>
                                <br />
                                <span t-field="o.production_id" />
                                <span t-field="o.name" />
                            </td>
                        </tr>
                    </table>
                </div>
                <br />
                <div class="row" style="padding:10px 0px;" valign="top">
                    <table border="0" cellpadding="0" cellspacing="0"
                        t-attf-style="color:#fff; text-transform:capitalize; border: 1px solid #{theme_color or '#000000'};"
                        width="100%">
                        <tr
                            t-attf-style="color: #{theme_text_color or '#000000'}; background-color: #{theme_color or '#000000'};">
                            <td t-attf-style="padding:9px 15px; font-weight:bold;">
                                <span class="text-left">Product:</span>
                                <br />
                                <span t-field="o.product_id" />
                            </td>
                            <td colspan="2"
                                t-attf-style="background-color:#f2f2f2; height:4px; color: #{theme_text_color or '#000000'};" />
                            <td />
                            <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                <span class="text-left">Location:</span>
                                <p t-field="o.location_id" />

                            </td>
                            <td colspan="2"
                                t-attf-style="background-color:#f2f2f2; height:4px; color: #{theme_text_color or '#000000'};" />
                            <td />
                            <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                <span class="text-left">Expected Duration:</span>
                                <br />
                                <p t-field="o.duration_expected" />
                            </td>
                            <td colspan="2"
                                t-attf-style="background-color:#f2f2f2; height:4px; color: #{theme_text_color or '#000000'};" />
                            <td />
                            <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                <span class="text-left">Quantity to Produce:</span>
                                <br />
                                <p t-field="o.qty_production" />
                            </td>
                        </tr>
                    </table>

                </div>

                <div class="oe_structure" />
                <h3 class="mt-5">
                    <strong>
                        <i>Components</i>
                    </strong>
                </h3>
                <table BORDERCOLOR="#{theme_color or '#000000'}" border="1" cellpadding="0"
                    cellspacing="0"
                    style="border-collapse: collapse; text-transform:capitalize; padding:15px;"
                    width="100%">
                    <tr>
                        <t t-set="colspan" t-value="5" />
                        <t t-set="index_no" t-value="1" />
                        <td width="5%"
                            t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; height: 20px; text-align: center; padding: 15px 9px;">
                            <b>No.</b>
                        </td>
                        <th
                            t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; height: 20px; text-align: center; padding: 15px 9px;">
                            Product</th>
                        <th
                            t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; height: 20px; text-align: center; padding: 15px 9px;">
                            Consume</th>
                        <th
                            t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; height: 20px; text-align: center; padding: 15px 9px;">
                            Consumed</th>
                        <th
                            t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; height: 20px; text-align: center; padding: 15px 9px;">
                            UOM</th>
                    </tr>
                    <t t-foreach="o.move_raw_ids" t-as="line">
                        <tr>
                            <td
                                t-attf-style="padding:5px;border:1px solid #ccc;">
                                <span t-esc="index_no" />
                            </td>
                            <td
                                t-attf-style="padding:5px;border:1px solid #ccc;">
                                <span t-field="line.product_id" />
                            </td>
                            <td
                                t-attf-style="padding:5px;border:1px solid #ccc;">
                                <span t-field="line.product_uom_qty" />
                            </td>
                            <td
                                t-attf-style="padding:5px;border:1px solid #ccc;">
                                <span t-field="line.quantity_done" />
                            </td>
                            <td
                                t-attf-style="padding:5px;border:1px solid #ccc;">
                                <span t-field="line.product_uom" />
                            </td>
                            <t t-set="index_no" t-value="index_no+1" />
                        </tr>
                    </t>
                </table>
                <h3 class="mt-5" t-if="o.byproduct_ids">
                    <strong>
                        <i>By-Products</i>
                    </strong>
                </h3>
                <table t-if="o.byproduct_ids"
                    BORDERCOLOR="#{theme_color or '#000000'}" border="1" cellpadding="0"
                    cellspacing="0"
                    style="border-collapse: collapse; text-transform:capitalize; padding:15px;"
                    width="100%">
                    <tr>
                        <t t-set="index_no" t-value="1" />
                        <td width="5%"
                            t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; height: 20px; text-align: center; padding: 15px 9px;">
                            <b>No.</b>
                        </td>
                        <th
                            t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; height: 20px; text-align: center; padding: 15px 9px;">
                            Product</th>
                        <th
                            t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; height: 20px; text-align: center; padding: 15px 9px;">
                            To Produce</th>
                        <th
                            t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; height: 20px; text-align: center; padding: 15px 9px;">
                            Produced</th>
                        <th
                            t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; height: 20px; text-align: center; padding: 15px 9px;">
                            UOM</th>
                    </tr>
                    <t t-foreach="o.byproduct_ids" t-as="line">
                        <tr>
                            <td
                                t-attf-style="padding:5px;border:1px solid #ccc;">
                                <span t-esc="index_no" />
                            </td>
                            <td
                                t-attf-style="padding:5px;border:1px solid #ccc;">
                                <span t-field="line.product_id" />
                            </td>
                            <td
                                t-attf-style="padding:5px;border:1px solid #ccc;">
                                <span t-field="line.product_uom_qty" />
                            </td>
                            <td
                                t-attf-style="padding:5px;border:1px solid #ccc;">
                                <span t-field="line.quantity_done" />
                            </td>
                            <td
                                t-attf-style="padding:5px;border:1px solid #ccc;">
                                <span t-field="line.product_uom" />
                            </td>
                            <t t-set="index_no" t-value="index_no+1" />
                        </tr>
                    </t>
                </table>
                <h3 class="mt-5" t-if="o.time_ids">
                    <strong>
                        <i>Time Tracking</i>
                    </strong>
                </h3>
                <table t-if="o.time_ids" BORDERCOLOR="#{theme_color or '#000000'}"
                    border="1"
                    cellpadding="0"
                    cellspacing="0"
                    style="border-collapse: collapse; text-transform:capitalize; padding:15px;"
                    width="100%">

                    <tr>
                        <t t-set="index_no" t-value="1" />
                        <td width="5%"
                            t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; height: 20px; text-align: center; padding: 15px 9px;">
                            <b>No.</b>
                        </td>
                        <th
                            t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; height: 20px; text-align: center; padding: 15px 9px;">
                            Start Date</th>
                        <th
                            t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; height: 20px; text-align: center; padding: 15px 9px;">
                            End Date</th>
                        <th
                            t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; height: 20px; text-align: center; padding: 15px 9px;">
                            Duration</th>
                    </tr>
                    <t t-foreach="o.time_ids" t-as="line">
                        <tr>
                            <td
                                t-attf-style="padding:5px;border:1px solid #ccc;">
                                <span t-esc="index_no" />
                            </td>
                            <td
                                t-attf-style="padding:5px;border:1px solid #ccc;">
                                <span t-field="line.date_start" />
                            </td>
                            <td
                                t-attf-style="padding:5px;border:1px solid #ccc;">
                                <span t-field="line.date_end" />
                            </td>
                            <td
                                t-attf-style="padding:5px;border:1px solid #ccc;">
                                <span t-field="line.duration" />
                            </td>
                            <t t-set="index_no" t-value="index_no+1" />
                        </tr>
                    </t>
                </table>
            </div>
        </t>
    </template>

    <template id="report_workorder_template">
        <t t-call="web.html_container">
            <t t-set="company_id" t-value="res_company"/>
            <t t-as="o" t-foreach="docs">
                <t t-call="equip3_manuf_reports.report_workorder_main" t-lang="o.partner_id.lang" />
            </t>
        </t>
    </template>
</odoo>