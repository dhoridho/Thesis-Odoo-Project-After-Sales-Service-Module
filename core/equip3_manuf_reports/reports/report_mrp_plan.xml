<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_report_manufacturing_plan" model="ir.actions.report">
        <field name="name">Production Plan</field>
        <field name="model">mrp.plan</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">equip3_manuf_reports.report_manufacturing_plan_template</field>
        <field name="report_file">equip3_manuf_reports.report_manufacturing_plan_template</field>
        <field name="binding_model_id" ref="equip3_manuf_operations.model_mrp_plan"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_manufacturing_plan_main">
        <t t-call="equip3_manuf_reports.manuf_external_layout">
            <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color" />
            <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color" />
            <t t-set="company_color" t-value="o.company_id and o.company_id.company_color" />
            <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color" />
            <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color" />
            <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color" />
            <t t-set="text_color" t-value="o.company_id and o.company_id.text_color" />
            <div class="page">
                <div class="oe_structure"/>
                <t t-call="general_template.template_watermark"/>
                <div class="row" style="padding:10px 0px;" valign="top">
                    <table border="0" cellpadding="0" cellspacing="0"
                        t-attf-style="color:#fff; text-transform:capitalize; border: 1px solid #{theme_color or '#000000'};"
                        width="100%">
                        <tr
                            t-attf-style="color: #{theme_text_color or '#000000'}; background-color: #{theme_color or '#000000'};">
                            <td t-attf-style="padding:9px 15px; font-weight:bold;">
                                <strong>Production Plan</strong> # <br />
                            <span
                                    t-field="o.plan_id" />
                            </td>
                            <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                <span class="text-left">Plane Name:</span>
                                <br />
                                <p t-field="o.name" />
                            </td>
                            <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                <span class="text-left">Scheduled Date:</span>
                                <br />
                                <span t-field="o.date_planned_start"/>
                                to
                                <br />
                                <span t-field="o.date_planned_finished"/>
                            </td>
                            <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                <span class="text-left">Expected Duration:</span>
                                <br />
                                <p t-field="o.duration_expected" />
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="row" style="padding:10px 0px;" valign="top">
                    <table border="0" cellpadding="0" cellspacing="0"
                        t-attf-style="color:#fff; text-transform:capitalize; border: 1px solid #{theme_color or '#000000'};"
                        width="100%">
                        <tr
                            t-attf-style="color: #{theme_text_color or '#000000'}; background-color: #{theme_color or '#000000'};">
                            <td t-attf-style="padding:9px 15px; font-weight:bold;">
                                <strong>PPIC :</strong>
                                <br />
                                <p t-field="o.ppic_id" />
                            </td>
                            <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                <span class="text-left">Status:</span>
                                <br />
                                <p t-field="o.state" />
                            </td>
                            <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                <span class="text-left">Actual Date:</span>
                                <br />
                                <span t-field="o.date_planned_start"/>
                                to
                                <br />
                                <span t-field="o.date_planned_finished"/>
                            </td>
                            <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                <span class="text-left">Actual Duration:</span>
                                <br />
                                <p t-field="o.duration" />
                            </td>
                        </tr>
                    </table>
                </div>  
                <br />

                <div class="mt-5">
                    <h3>
                        <strong>Components</strong>
                    </h3>
                </div>
                <table
                    BORDERCOLOR="#{theme_color or '#000000'}" border="1" cellpadding="0"
                    cellspacing="0"
                    style="border-collapse: collapse; text-transform:capitalize; padding:15px;"
                    width="100%">
                    <t t-set="index_no" t-value="1" />
                    <tr>
                        <td
                            width="3%"
                            t-attf-style="background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; text-align: center; height: 20px; padding: 15px 9px;">
                            <b>No.</b>
                        </td>
                        <td
                            width="30%"
                            t-attf-style="background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; text-align: center; height: 20px; padding: 15px 9px;">
                            <b>Production Order</b>
                        </td>
                        <td
                            width="30%"
                            t-attf-style="background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; text-align: center; height: 20px; padding: 15px 9px;">
                            <b>Work Order</b>
                        </td>
                        <td width="30%"
                            t-attf-style="background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; text-align: center; height: 20px; padding: 15px 9px;">
                            <b>Product</b>
                        </td>
                        <td width="30%"
                            t-attf-style="background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; text-align: center; height: 20px; padding: 15px 9px;">
                            <b>Unit of Measure</b>
                        </td>
                        <td width="30%"
                            t-attf-style="background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; text-align: center; height: 20px; padding: 15px 9px;">
                            <b>To Consume</b>
                        </td>
                        <td width="30%"
                            t-attf-style="background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; text-align: center; height: 20px; padding: 15px 9px;">
                            <b>Available</b>
                        </td>
                        <td width="30%"
                            t-attf-style="background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; text-align: center; height: 20px; padding: 15px 9px;">
                            <b>Reserved</b>
                        </td>
                        <td width="30%"
                            t-attf-style="background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; text-align: center; height: 20px; padding: 15px 9px;">
                            <b>Consumed</b>
                        </td>
                    </tr>

                    <tr t-foreach="o.mo_stock_move_ids" t-as="oo">
                        <td t-attf-style="padding:5px;border:1px solid #ccc;">
                            <span t-esc="index_no" />
                        </td>
                        <td t-attf-style="padding:5px;border:1px solid #ccc;">
                            <span t-field="oo.raw_material_production_id" />
                        </td>
                        <td t-attf-style="padding:5px;border:1px solid #ccc;">
                            <span t-field="oo.workorder_id" />
                        </td>
                        <td t-attf-style="padding:5px;border:1px solid #ccc;">
                            <span t-field="oo.product_tmpl_id" />
                        </td>
                        <td t-attf-style="padding:5px;border:1px solid #ccc;">
                            <span t-field="oo.product_uom" />
                        </td>
                        <td t-attf-style="padding:5px;border:1px solid #ccc;">
                            <span t-field="oo.should_consume_qty" />
                        </td>
                        <td t-attf-style="padding:5px;border:1px solid #ccc;">
                            <span t-field="oo.availability" />
                        </td>
                        <td t-attf-style="padding:5px;border:1px solid #ccc;">
                            <span t-field="oo.reserved_availability" />
                        </td>
                        <td 
                            t-attf-style="padding:5px;border:1px solid #ccc;">
                            <span t-field="oo.quantity_done" />
                        </td>
                        <t t-set="index_no" t-value="index_no+1" />
                    </tr>
                </table>

                <br/>
                
                <div class="mt-5">
                    <h3>
                        <strong>Production Orders</strong>
                    </h3>
                </div>
                <table
                    BORDERCOLOR="#{theme_color or '#000000'}" border="1" cellpadding="0"
                    cellspacing="0"
                    style="border-collapse: collapse; text-transform:capitalize; padding:15px;"
                    width="100%">
                    <t t-set="index_no" t-value="1" />
                    <tr>
                        <td
                            width="3%"
                            t-attf-style="background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; text-align: center; height: 20px; padding: 15px 9px;">
                            <b>No.</b>
                        </td>
                        <td
                            width="30%"
                            t-attf-style="background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; text-align: center; height: 20px; padding: 15px 9px;">
                            <b>Production Order</b>
                        </td>
                        <td
                            width="30%"
                            t-attf-style="background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; text-align: center; height: 20px; padding: 15px 9px;">
                            <b>Product</b>
                        </td>
                        <td width="30%"
                            t-attf-style="background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; text-align: center; height: 20px; padding: 15px 9px;">
                            <b>To Consume</b>
                        </td>
                        <td width="30%"
                            t-attf-style="background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; text-align: center; height: 20px; padding: 15px 9px;">
                            <b>Produced</b>
                        </td>
                        <td width="30%"
                            t-attf-style="background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; text-align: center; height: 20px; padding: 15px 9px;">
                            <b>Scheduled Date</b>
                        </td>
                        <td width="30%"
                            t-attf-style="background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; text-align: center; height: 20px; padding: 15px 9px;">
                            <b>Scheduled End Date</b>
                        </td>
                        <td width="30%"
                            t-attf-style="background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; text-align: center; height: 20px; padding: 15px 9px;">
                            <b>Status</b>
                        </td>
                    </tr>

                    <tr t-foreach="o.mrp_order_ids" t-as="oo">
                        <td t-attf-style="padding:5px;border:1px solid #ccc;">
                            <span t-esc="index_no" />
                        </td>
                        <td t-attf-style="padding:5px;border:1px solid #ccc;">
                            <span t-field="oo.name" />
                        </td>
                        <td t-attf-style="padding:5px;border:1px solid #ccc;">
                            <span t-field="oo.product_id" />
                        </td>
                        <td t-attf-style="padding:5px;border:1px solid #ccc;">
                            <span t-field="oo.product_qty" />
                        </td>
                        <td t-attf-style="padding:5px;border:1px solid #ccc;">
                            <span t-field="oo.qty_produced" />
                        </td>
                        <td t-attf-style="padding:5px;border:1px solid #ccc;">
                            <span t-field="oo.date_planned_start" />
                        </td>
                        <td t-attf-style="padding:5px;border:1px solid #ccc;">
                            <span t-field="oo.date_planned_finished" />
                        </td>
                        <td t-attf-style="padding:5px;border:1px solid #ccc;">
                            <span t-field="oo.state" />
                        </td>
                        <t t-set="index_no" t-value="index_no+1" />
                    </tr>
                </table>
     
                <br />
                <div class="mt-5">
                    <h3>
                        <strong>Work Orders</strong>
                    </h3>
                </div>
                <table
                    BORDERCOLOR="#{theme_color or '#000000'}" border="1" cellpadding="0"
                    cellspacing="0"
                    style="border-collapse: collapse; text-transform:capitalize; padding:15px;"
                    width="100%">
                    <t t-set="index_no" t-value="1" />
                    <tr>
                        <td
                            width="3%"
                            t-attf-style="background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; text-align: center; height: 20px; padding: 15px 9px;">
                            <b>No.</b>
                        </td>
                        <td
                            width="30%"
                            t-attf-style="background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; text-align: center; height: 20px; padding: 15px 9px;">
                            <b>Operations</b>
                        </td>
                        <td
                            width="30%"
                            t-attf-style="background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; text-align: center; height: 20px; padding: 15px 9px;">
                            <b>Work Center</b>
                        </td>
                        <td width="30%"
                            t-attf-style="background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; text-align: center; height: 20px; padding: 15px 9px;">
                            <b>Location</b>
                        </td>
                        <td width="30%"
                            t-attf-style="background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; text-align: center; height: 20px; padding: 15px 9px;">
                            <b>Scheduled Start Date</b>
                        </td>
                        <td width="30%"
                            t-attf-style="background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; text-align: center; height: 20px; padding: 15px 9px;">
                            <b>Expected Duration</b>
                        </td>
                        <td width="30%"
                            t-attf-style="background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; text-align: center; height: 20px; padding: 15px 9px;">
                            <b>Read Duration</b>
                        </td>
                        <td width="30%"
                            t-attf-style="background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; text-align: center; height: 20px; padding: 15px 9px;">
                            <b>Status</b>
                        </td>
                    </tr>

                    <tr t-foreach="o.workorder_ids" t-as="oo">
                        <td t-attf-style="padding:5px;border:1px solid #ccc;">
                            <span t-esc="index_no" />
                        </td>
                        <td t-attf-style="padding:5px;border:1px solid #ccc;">
                            <span t-field="oo.name" />
                        </td>
                        <td t-attf-style="padding:5px;border:1px solid #ccc;">
                            <span t-field="oo.workcenter_id" />
                        </td>
                        <td t-attf-style="padding:5px;border:1px solid #ccc;">
                            <span t-field="oo.location_id" />
                        </td>
                        <td t-attf-style="padding:5px;border:1px solid #ccc;">
                            <span t-field="oo.date_planned_start" />
                        </td>
                        <td t-attf-style="padding:5px;border:1px solid #ccc;">
                            <span t-field="oo.duration_expected" />
                        </td>
                        <td t-attf-style="padding:5px;border:1px solid #ccc;">
                            <span t-field="oo.duration" />
                        </td>
                        <td t-attf-style="padding:5px;border:1px solid #ccc;">
                            <span t-field="oo.state" />
                        </td>
                        <t t-set="index_no" t-value="index_no+1" />
                    </tr>
                </table>
                <br />
 
                <div class="mt-5" t-if="o.move_byproduct_ids">
                    <h3>
                        <strong>By-Products</strong>
                    </h3>
                </div>
                <table
                BORDERCOLOR="#{theme_color or '#000000'}" border="1" cellpadding="0"
                cellspacing="0"
                style="border-collapse: collapse; text-transform:capitalize; padding:15px;"
                width="100%"
                t-if="o.move_byproduct_ids">
                <t t-set="index_no" t-value="1" />
                <tr>
                    <td
                        width="3%"
                        t-attf-style="background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; text-align: center; height: 20px; padding: 15px 9px;">
                        <b>No.</b>
                    </td>
                    <td
                        width="30%"
                        t-attf-style="background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; text-align: center; height: 20px; padding: 15px 9px;">
                        <b>Product</b>
                    </td>
                    <td width="30%"
                        t-attf-style="background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; text-align: center; height: 20px; padding: 15px 9px;">
                        <b>Destination Location</b>
                    </td>
                    <td width="30%"
                        t-attf-style="background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; text-align: center; height: 20px; padding: 15px 9px;">
                        <b>To Produce</b>
                    </td>
                    <td width="30%"
                        t-attf-style="background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; text-align: center; height: 20px; padding: 15px 9px;">
                        <b>Unit of Measure</b>
                    </td>
                    <td width="30%"
                        t-attf-style="background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; text-align: center; height: 20px; padding: 15px 9px;">
                        <b>Serial Numbers</b>
                    </td>
                </tr>

                <tr t-foreach="o.move_byproduct_ids" t-as="oo" t-if="o.move_byproduct_ids">
                    <td t-attf-style="padding:5px;border:1px solid #ccc;">
                        <span t-esc="index_no" />
                    </td>
                    <td t-attf-style="padding:5px;border:1px solid #ccc;">
                        <span t-field="oo.product_id" />
                    </td>
                    <td t-attf-style="padding:5px;border:1px solid #ccc;">
                        <span t-field="oo.location_dest_id" />
                    </td>
                    <td t-attf-style="padding:5px;border:1px solid #ccc;">
                        <span t-field="oo.product_uom_qty" />
                    </td>
                    <td t-attf-style="padding:5px;border:1px solid #ccc;">
                        <span t-field="oo.quantity_done" />
                    </td>
                    <td t-attf-style="padding:5px;border:1px solid #ccc;">
                        <span t-field="oo.product_uom" />
                    </td>
                    <td t-attf-style="padding:5px;border:1px solid #ccc;">
                        <span t-field="oo.lot_ids" />
                    </td>
                    <t t-set="index_no" t-value="index_no+1" />
                </tr>
            </table>
            </div>
        </t>
    </template>

    <template id="report_manufacturing_plan_template">
        <t t-call="web.html_container">
            <t t-set="company_id" t-value="res_company"/>
            <t t-as="o" t-foreach="docs">
                <t t-call="equip3_manuf_reports.report_manufacturing_plan_main" />
            </t>
        </t>
    </template>
</odoo>
