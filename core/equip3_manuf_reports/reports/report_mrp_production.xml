<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_mrporder_inherit_equip3" inherit_id="mrp.report_mrporder">
        <xpath expr="//t[@t-call='web.internal_layout']" position="replace">
            <t t-set="company_id" t-value="res_company"/>
            <t t-call="equip3_manuf_reports.manuf_external_layout">
                <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color" />
                <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color" />
                <t t-set="company_color" t-value="o.company_id and o.company_id.company_color" />
                <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color" />
                <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color" />
                <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color" />
                <t t-set="text_color" t-value="o.company_id and o.company_id.text_color" />
                <div class="page" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                    <div class="oe_structure"/>
                    <t t-call="general_template.template_watermark"/>
                    
                    <hr t-attf-style="border-top: 1px solid black;" />
                    <div class="row" style="padding:10px 0px;" valign="top">
                        <table border="0" cellpadding="0" cellspacing="0"
                            t-attf-style="color:#fff; text-transform:capitalize; border: 1px solid #{theme_color or '#000000'};"
                            width="100%">
                            <tr
                                t-attf-style="color: #{theme_text_color or '#000000'}; background-color: #{theme_color or '#000000'};">
                                <td t-attf-style="padding:9px 15px; font-weight:bold;">
                                    <strong>Production Order</strong> # <br />
                                <span
                                        t-field="o.name" />
                                </td>
                                <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                    <span class="text-left">Responsible:</span>
                                    <br />
                                    <p t-field="o.user_id" />
                                </td>
                                <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                    <span class="text-left">Scheduled Date:</span>
                                    <br />
                                    <p t-field="o.date_planned_start" />
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="row" style="padding:10px 0px;" valign="top">
                        <table border="0" cellpadding="0" cellspacing="0"
                            t-attf-style="color:#fff; text-transform:capitalize; border: 1px solid #{theme_color or '#000000'};"
                            width="100%">
                            <tr
                                t-attf-style="color: #{theme_text_color or '#000000'}; background-color: #{theme_color or '#000000'};">
                                <td t-attf-style="padding:9px 15px; font-weight:bold;">
                                    <strong>Finished Product: </strong><br />
                                <span
                                        t-field="o.product_id" />
                                </td>
                                <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                    <span class="text-left">Quantity to Produce:</span>
                                    <br />
                                    <span t-field="o.product_qty"/>
                                    <span t-field="o.product_uom_id.name" groups="uom.group_uom"/>
                                </td>
                                <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                    <span class="text-left">Finished Product Location:</span>
                                    <br />
                                    <p t-field="o.location_dest_id" />
                                </td>
                            </tr>
                        </table>
                    </div>
                    <br />
                    
                    <div t-if="o.workorder_ids">
                        <h3>
                            <span t-if="o.state == 'done'">Operations Done</span>
                            <span t-else="">Operations Planned</span>
                        </h3>
                        <table BORDERCOLOR="#{theme_color or '#000000'}" border="1" cellpadding="0"
                        cellspacing="0"
                        style="border-collapse: collapse; text-transform:capitalize; padding:15px;"
                        width="100%">
                        <tr>
                            <t t-set="index_no" t-value="1" />
                            <td width="2%"
                                t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; height: 20px; text-align: center; padding: 15px 9px;">
                                <b>No.</b>
                            </td>
                            <td width="20%"
                                t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; height: 20px; text-align: center; padding: 15px 9px;">
                                <b>Operation</b>
                            </td>
                            <td width="20%"
                                t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'};  height: 20px; text-align: center; padding: 15px 9px;">
                                <b>WorkCenter</b>
                            </td>
                            <td width="20%"
                                t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'};  height: 20px; text-align: center; padding: 15px 9px;">
                                <b>Location</b>
                            </td>
                            <td width="40%"
                                t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'};  height: 20px; text-align: center; padding: 15px 9px;">
                                <b>No. Of Minutes</b>
                            </td>
                        </tr>
                        
                        <tr t-foreach="o.workorder_ids" t-as="o">
                            <td t-attf-style="padding:5px;border:1px solid #ccc;">
                                <span t-esc="index_no" />
                            </td>
                            <td t-attf-style="padding:5px;border:1px solid #ccc;">
                                <span t-field="o.name"/>
                            </td>
                            <td t-attf-style="padding:5px;border:1px solid #ccc;">
                                <span t-field="o.workcenter_id.name" />
                            </td>
                            <td t-attf-style="padding:5px;border:1px solid #ccc;">
                                <span t-field="o.location_id" />
                            </td>
                            <td t-attf-style="padding:5px;border:1px solid #ccc;">
                                <span t-if="o.state != 'done'" t-field="o.duration_expected"/>
                                <span t-if="o.state == 'done'" t-field="o.duration"/>
                            </td>
                            <t t-set="index_no" t-value="index_no+1" />
                        </tr>
                    </table>
                    <br />
                    </div>

                    <h3 t-if="o.move_raw_ids">
                        <span t-if="o.state == 'done'">
                            Consumed Products
                        </span>
                        <span t-else="">
                            Products to Consume
                        </span>
                    </h3>

                    <table  BORDERCOLOR="#{theme_color or '#000000'}" border="1" cellpadding="0"
                            cellspacing="0"
                            style="border-collapse: collapse; text-transform:capitalize; padding:15px;"
                            width="100%"
                            t-if="o.move_raw_ids">
                    <t t-set="has_product_barcode" t-value="any(m.product_id.barcode for m in o.move_raw_ids)"/>
                        <thead>
                            <tr>
                                <t t-set="index_no" t-value="1" />
                                <td width="2%"
                                    t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; height: 20px; text-align: center; padding: 15px 9px;">
                                    <b>No.</b>
                                </td>
                                <th t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; height: 20px; text-align: center; padding: 15px 9px;">                 
                                    Product</th>
                                <th t-attf-class="{{ 'text-right' if not has_product_barcode else '' }}"
                                    t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; height: 20px; text-align: center; padding: 15px 9px;">
                                    Quantity</th>
                                <th 
                                    t-if="has_product_barcode" 
                                    width="15%" 
                                    class="text-center"
                                    t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; height: 20px; text-align: center; padding: 15px 9px;">
                                    Barcode</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-if="o.move_raw_ids">
                                <tr t-foreach="o.move_raw_ids" t-as="raw_line">
                                    <td t-attf-style="padding:5px;border:1px solid #ccc;">
                                        <span t-esc="index_no" />
                                    </td>
                                    <td t-attf-style="padding:5px;border:1px solid #ccc;">
                                        <span t-field="raw_line.product_id"/>
                                    </td>
                                    <td t-attf-class="{{ 'text-right' if not has_product_barcode else '' }}"
                                        t-attf-style="padding:5px;border:1px solid #ccc;">
                                        <span t-field="raw_line.product_uom_qty"/>
                                        <span t-field="raw_line.product_uom" groups="uom.group_uom"/>
                                    </td>
                                    <td t-if="has_product_barcode" 
                                        width="15%" 
                                        class="text-center"
                                        t-attf-style="padding:5px;border:1px solid #ccc;">
                                        <t t-if="raw_line.product_id.barcode">
                                            <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', raw_line.product_id.barcode, 600, 100)" style="width:100%;height:35px" alt="Barcode"/>
                                        </t>
                                    </td>
                                    <t t-set="index_no" t-value="index_no+1" />
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
                <div class="oe_structure"/>
            </t>
        </xpath>
    </template>
</odoo>