<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="izi_lazada.form_mp_lazada_logistic" model="ir.ui.view">
            <field name="name">Marketplace Lazada Logistic Form View</field>
            <field name="model">mp.lazada.logistic</field>
            <field name="arch" type="xml">
                <form string="Marketplace Lazada Logistic">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="product_id" domain="[('type', '=', 'service')]"/>
                        </group>
                        <notebook>
                            <page string="Logistic Info">
                                <group>
                                    <field name="name"/>
                                    <field name="cod"/>
                                    <field name="is_default"/>
                                    <field name="tracking_url"/>
                                </group>
                            </page>
                            <page string="Debug" groups="base.group_no_one">
                                <group>
                                    <field name="mp_external_id"/>
                                    <field name="md5sign"/>
                                    <field name="raw"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="izi_lazada.tree_mp_lazada_logistic_service" model="ir.ui.view">
            <field name="name">Marketplace Lazada Logistic Tree View</field>
            <field name="model">mp.lazada.logistic</field>
            <field name="arch" type="xml">
                <tree string="Marketplace Lazada Logistic">
                    <field name="name"/>
                    <field name="cod"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>