<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="izi_lazada.mp_lazada_seller_tree" model="ir.ui.view">
            <field name="name">mp.lazada.seller.tree</field>
            <field name="model">mp.lazada.seller</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="izi_lazada.form_mp_lazada_seller" model="ir.ui.view">
            <field name="name">Marketplace Lazada Seller Form View</field>
            <field name="model">mp.lazada.seller</field>
            <field name="arch" type="xml">
                <form string="Marketplace Lazada Seller">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <img alt="Lazada" class="mp-account-img" src="/izi_lazada/static/src/img/lz.png"/>
                        </div>
                        <field class="oe_avatar" name="seller_logo" readonly="1" widget="image_url"/>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="name"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="seller_id"/>
                                <field name="mp_account_id"/>
                                <field name="seller_email"/>
                                <field name="seller_company"/>
                                <field name="seller_location"/>
                                <field name="short_code"/>
                            </group>
                            <group>
                                <field name="seller_verified"/>
                                <field name="seller_cb"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Active Logistics">
                                <field context="{'default_shop_id': active_id, 'default_mp_account_id': mp_account_id}" mode="tree" name="seller_logistic_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="cod_enabled"/>
                                    </tree>
                                    <form string="Marketplace Lazada Shop Logistic">
                                        <sheet>
                                            <!--suppress OdooXml -->
                                            <field invisible="1" name="id"/>
                                            <field invisible="1" name="shop_id"/>
                                            <field invisible="1" name="mp_account_id"/>
                                            <group>
                                                <!--suppress PyUnresolvedReferences -->
                                                <field attrs="{'readonly': [('id', '!=', False)]}" force_save="1" name="logistic_id" options="{'no_create': True}"/>
                                                <field name="name"/>
                                                <field name="cod_enabled"/>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                            <page groups="base.group_no_one" string="Debug">
                                <group>
                                    <field name="mp_external_id"/>
                                    <field name="md5sign"/>
                                    <field name="raw"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
