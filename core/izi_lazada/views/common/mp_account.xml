<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="0">
    <record id="form_mp_account" model="ir.ui.view">
      <field name="name">Marketplace Account Form View</field>
      <field name="model">mp.account</field>
      <field name="inherit_id" ref="izi_marketplace.form_mp_account"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@name='button_box']" position="inside">
          <img alt="Lazada" attrs="{'invisible': [('marketplace', '!=', 'lazada')]}" class="mp-account-img"
               src="/izi_lazada/static/src/img/lz.png"/>
        </xpath>
        <xpath expr="//group[@name='mp_credential']" position="inside">
          <group attrs="{'invisible': [('marketplace', '!=', 'lazada')]}">
            <field name="lz_app_name" attrs="{'required': [('marketplace', '=', 'lazada')]}"/>
            <field name="lz_app_key" attrs="{'required': [('marketplace', '=', 'lazada')]}"/>
            <field name="lz_app_secret" password="True" attrs="{'required': [('marketplace', '=', 'lazada')]}"/>
            <field name="lz_country" attrs="{'required': [('marketplace', '=', 'lazada')]}"/>
            <field name="lz_seller_id" attrs="{'invisible': [('lz_seller_id', '=', False)]}"/>
          </group>
        </xpath>
      </field>
    </record>
  </data>
</odoo>