<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="izi_lazada.form_wiz_lz_set_invoice" model="ir.ui.view">
            <field name="name">Wizard Lazada Set Invoice Order Form View</field>
            <field name="model">wiz.lz_set_invoice</field>
            <field name="arch" type="xml">
                <form string="Wizard Lazada Pack Order">
                    <sheet>
                        <group>
                            <field name="order_ids" widget="many2many_tags" readonly="1" force_save="1"/>
                            <field name="mp_invoice_number" required="1"/>
                        </group>
                        <footer>
                            <button name="confirm" type="object" string="Confirm" class="btn-primary"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>