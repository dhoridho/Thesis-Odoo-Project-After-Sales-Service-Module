<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_expense_reimbursement_form" model="ir.ui.view">
        <field name="name">hr.expense.reimbursement.form</field>
        <field name="model">hr.expense.reimbursement</field>
        <field name="arch" type="xml">
            <form string="Auto Generate Cycle">
                <group>
                    <group>
                        <label for="reimbursement_date_after" string="Reimbursement Date after"/>
                        <div>
                            <field name="reimbursement_date_after"
                                   class="oe_inline"/>
                            <span>days
                            </span>
                        </div>
                    </group>
                </group>
                <footer>
                    <button name="prepare_reimbursement" string="Confirm" type="object" class="btn-primary"
                    />
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="hr_expense_reimbursement_action" model="ir.actions.act_window">
        <field name="name">Auto Generate Cycles</field>
        <field name="res_model">hr.expense.reimbursement</field>
        <field name="view_id" ref="hr_expense_reimbursement_form"/>
        <field name="target">new</field>
    </record>
</odoo>