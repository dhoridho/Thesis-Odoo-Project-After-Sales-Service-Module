<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	 <record id="expense_flow_view_form" model="ir.ui.view">
        <field name="name">hr.expense.flow.view.form</field>
        <field name="model">hr.expense.flow</field>
        <field name="arch" type="xml">
            <form string="Expense Flow" class="expense_flow_menu d-flex flex-column"> 
                <div class="content-header">
                    <div class="d-flex p-3 w-100">
                        <span>Expense Flow</span>
                    </div>
                </div>
                <div class="content-body">
                    <div class="container h-100">
                        <div class="row h-100">

                            <div class="col-md-12 d-flex flex-column">
                                <div class="row">
                                    <div class="col-md-6 col-sm-6 col-6 pl-5"> 
                                        <button name="equip3_accounting_cash_advance.action_account_cash_advance" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_expense_extend/static/src/img/cash-advance.svg"/>
                                            </div>
                                            <div class="button-text">Cash Advance</div>
                                             <div class="menu-arrow-down-right">
                                                <span class="arrow is-triangle arrow-bar is-down-right"></span>
                                            </div>
                                        </button>
                                    </div>
                                    <div class="col-md-1 col-sm-1 col-1"> 
                                        <button name="action_none" 
                                            type="object"
                                            class="btn btn-default"
                                            id="expense_travel_btn">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_expense_extend/static/src/img/travel.svg"/>
                                            </div>
                                            <div class="button-text">Travel</div>
                                            <div class="menu-arrow-down-left">
                                                <span class="arrow is-triangle arrow-bar is-down-left"></span>
                                            </div>
                                        </button>
                                        
                                    </div>

                                </div>  
                                <div class="row">
                                    <div class="col-md-2 col-sm-2 col-2"> 
                                        <button name="equip3_hr_employee_access_right_setting.action_open_sale_target_form" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_expense_extend/static/src/img/employees.svg"/>
                                            </div>
                                            <div class="button-text">Employee</div>
                                             <div class="menu-arrow">
                                                <span class="arrow is-triangle arrow-bar is-right"></span>
                                            </div> 
                                        </button>
                                    </div>
                                    <div class="col-md-2 col-sm-2 col-2"> 
                                        <button name="hr_expense.hr_expense_actions_my_all" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_expense_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">My Expense Line</div>
                                             <div class="menu-arrow">
                                                <span class="arrow is-triangle arrow-bar is-right"></span>
                                            </div> 
                                        </button>
                                    </div>
                                    <div class="col-md-2 col-sm-2 col-2"> 
                                        <button name="equip3_hr_expense_extend.action_hr_expense_sheet_my_all_custom" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_expense_extend/static/src/img/my-expense.svg"/>
                                            </div>
                                            <div class="button-text">My Expense</div>
                                              <div class="menu-arrow">
                                                <span class="arrow is-triangle arrow-bar is-right"></span>
                                            </div> 
                                        </button>
                                    </div>
                                    <div class="col-md-2 col-sm-2 col-2"> 
                                        <button name="hr_expense.action_hr_expense_sheet_all_to_post" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_expense_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Expense to Post</div>
                                            <div class="menu-arrow">
                                                <span class="arrow is-triangle arrow-bar is-right"></span>
                                            </div> 
                                        </button>
                                    </div>
                                    <div class="col-md-2 col-sm-2 col-2"> 
                                        <button name="hr_expense.action_hr_expense_sheet_all_to_pay" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_expense_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Expense to Pay</div>
                                        </button>
                                    </div>
                                </div>  
                                <div class="row">
                                    <div class="col-md-1 col-sm-1 col-1 pt-4"> 
                                        <button name="equip3_hr_expense_extend.expense_approval_matrix_act_window" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_expense_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Expense Approval Matrix</div>
                                        </button>
                                    </div>
                                    <div class="col-md-1 col-sm-1 col-1"> 
                                        <button name="hr_expense.action_hr_expense_configuration" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_expense_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Settings</div>
                                        </button>
                                    </div>
                                    <div class="col-md-2 col-sm-2 col-2"> 
                                        <button name="action_none" 
                                            type="object"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_expense_extend/static/src/img/configuration.svg"/>
                                            </div>
                                            <div class="button-text">Configuration</div>
                                            <div class="menu-arrow-up">
                                                <span class="arrow is-triangle arrow-bar is-up"></span>
                                            </div>
                                        </button>
                                    </div>
                                    <div class="col-md-6 col-sm-6 col-6"> 
                                        <button name="action_none" 
                                            type="object"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_expense_extend/static/src/img/reporting.svg"/>
                                            </div>
                                            <div class="button-text">Reporting</div>
                                             
                                        </button>
                                    </div>
                                    
                                </div>   
                                <div class="row">
                                    <div class="col-md-1 col-sm-1 col-1"> 
                                        
                                    </div>
                                    <div class="col-md-1 col-sm-1 col-1"> 
                                        <button name="hr_expense.hr_expense_product" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_expense_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Expense Products</div>
                                        </button>
                                    </div>
                                    <div class="col-md-2 col-sm-2 col-2"> 
                                        <button name="equip3_hr_expense_extend.hr_expense_cycle_action" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_expense_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Expense Cycle</div>
                                             
                                        </button>
                                    </div>
                                    <div class="col-md-6 col-sm-6 col-6"> 
                                        <button name="hr_expense.hr_expense_actions_all" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_expense_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Expense Analysis</div>
                                             
                                        </button>
                                    </div>
                                </div>  
                            </div>

                        </div>
                    </div>
                            
                            
                            

                        
                </div>
            </form>
        </field>
    </record>

    <record id="expense_flow_act_window" model="ir.actions.act_window">
        <field name="name">Expense Flow</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.expense.flow</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    
    <record id="expense_flow_action_client" model="ir.actions.client">
        <field name="name">Expense Flow</field>
        <field name="tag">expense_flow_tag</field>
    </record>

    <menuitem 
        id="expense_flow_menu"
        name="Expense Flow"
        action="expense_flow_action_client"
        parent="hr_expense.menu_hr_expense_root"
        sequence="-1"/>
</odoo>