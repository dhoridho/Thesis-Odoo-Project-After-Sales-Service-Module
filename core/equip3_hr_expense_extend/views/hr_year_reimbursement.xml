<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_expense_cycle_tree" model="ir.ui.view">
            <field name="name">hr.expense.cycle.tree</field>
            <field name="model">hr.expense.cycle</field>
            <field name="arch" type="xml">
                <tree string="Expense Cycle">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_expense_cycle_from" model="ir.ui.view">
            <field name="name">hr.expense.cycle.from</field>
            <field name="model">hr.expense.cycle</field>
            <field name="arch" type="xml">
                <form string="Expense Cycle">
                    <header>
                        <button name="expense_confirm" string="Confirm" type="object" class="oe_highlight"
                                invisible="1"/>
                    </header>
                    <sheet>
                        <button name="%(equip3_hr_expense_extend.hr_expense_reimbursement_action)d"
                                string="Auto Generate Cycles"
                                type="action" class="oe_highlight" attrs="{'invisible': [('is_confirm', '=', True)]}"/>
                        <group>
                            <group>
                                <field name="name" attrs="{'readonly': [('is_confirm', '=', True)]}"/>
                                <field name="start_date" attrs="{'readonly': [('is_confirm', '=', True)]}"/>
                                <field name="end_date" attrs="{'readonly': [('is_confirm', '=', True)]}"/>
                                <field name="start_period_based_on" attrs="{'readonly': [('is_confirm', '=', True)]}"/>
                                <field name="reimbursement_date_after" invisible="1"/>
                                <field name="is_confirm" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Expense Cycle">
                                <field name="year_ids" readonly="1">
                                    <tree create="0" edit="0" delete="0" readonly="1">
                                        <field name="year"/>
                                        <field name="month"/>
                                        <field name="code"/>
                                        <field name="cycle_start"/>
                                        <field name="cycle_end"/>
                                        <field name="reimbursement_date"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_expense_cycle_action" model="ir.actions.act_window">
            <field name="name">Expense Cycle</field>
            <field name="res_model">hr.expense.cycle</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="hr_expense_cycle_menu" name="Expense Cycle"
                  parent="hr_expense.menu_hr_expense_configuration"
                  sequence="10"
                  action="hr_expense_cycle_action"/>

        <record id="employee_expense_pvt_inherit" model="ir.ui.view">
            <field name="name">employee.pvt.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='bank_account_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
