        <!-- rfid.mapping action window -->
        <record id="rfid_mapping_action" model="ir.actions.act_window">
            <field name="name">RFID Mapping</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">rfid.mapping</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem 
            id="rfid_mapping_menu"
            name="RFID Mapping"
            action="rfid_mapping_action"
            parent="stock.menu_warehouse_config"
            sequence="20"/>

