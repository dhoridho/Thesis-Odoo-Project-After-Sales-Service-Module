<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- rfid.mapping tree view -->
        <record id="rfid_mapping_view_tree" model="ir.ui.view">
            <field name="name">rfid.mapping.view.tree</field>
            <field name="model">rfid.mapping</field>
            <field name="arch" type="xml">
                <tree string="RFID Mapping" editable="bottom">
                    <field name="process_type"/>
                    <field name="location_id" domain="[('layer_label', '!=', False)]"/>
                    <field name="layer" force_save="1" readonly="1"/>
                </tree>
            </field>
        </record>

