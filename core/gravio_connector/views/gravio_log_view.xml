<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- TREE view  -->
    <record id="gravio_log_tree_view" model="ir.ui.view">
        <field name="name">gravio_log_tree</field>
        <field name="model">gravio.log</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <tree string="RFID Log" create="false">
                <header>
                    <button name="create_rn" type="object" string="Run the Scheduler" invisible="0"/>
                    <button name="refresh_page" type="object" string="Refresh" invisible="0"/>
                </header>
                <field name="data" invisible="1"/>
                <field name="area"/>
                <field name="log"/>
                <field name="layer"/>
                <field name="timestamp"/>
                <field name="datetime"/>

                <field name="sync" invisible="1"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_gravio_log">
        <field name="name">RFID Logs</field>
        <field name="res_model">gravio.log</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('sync','=', False)]</field>
    </record>
    <menuitem name="RFID Logs" id="menu_gravio_log" action="action_gravio_log" parent="stock.menu_warehouse_report"/>

</odoo>