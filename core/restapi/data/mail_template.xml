<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">


        <record id="mail_template_send_otp" model="mail.template">
            <field name="name">Hashmicro OTP</field>
            <field name="model_id" ref="model_otp_email"/>
            <field name="subject">Reset Password</field>
            <field name="email_from">${ctx['email_from']}</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="body_html" type="html">
                <table border="0" cellpadding="0" cellspacing="0" style="padding-top: 16px; background-color: #F1F1F1; font-family:Verdana, Arial,sans-serif; color: #454748; width: 100%; border-collapse:separate;"><tr><td align="center">
                <table border="0" cellpadding="0" cellspacing="0" width="590" style="padding: 16px; background-color: white; color: #454748; border-collapse:separate;">
                <tbody>
                    
                    <!-- CONTENT -->
                    <tr>
                        <td align="center" style="min-width:590px;"><div style="text-align: left;"><br/></div><table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width:590px;background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">

                                <tbody>
                                    <tr>
                                        <td valign="middle" align="right">
                                            <img src="/logo.png?company=${object.company_id.id}" style="padding: 0px; margin: 0px; height: auto; width: 80px;" alt="${object.company_id.name}"/>
                                        </td>
                                    </tr>
                                    <tr>

                                    <td style="text-align:left">
                                    
                                    <span style="font-size:20px;font-weight: bold;">
                                        Reset your password?
                                    </span>
                                    
                                    <br/>
                                </td>
                                
                                </tr><tr><td valign="top" style="font-size:13px;">
                                    <div><div style="text-align: justify;"><span style="font-family: &quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif; font-style: inherit; font-variant-ligatures: inherit; font-variant-caps: inherit; font-weight: inherit; text-align: inherit;">If you request a password reset for  ${ctx.get('name')}</span></div><div style="text-align: justify;"><span style="font-family: &quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif; font-style: inherit; font-variant-ligatures: inherit; font-variant-caps: inherit; font-weight: inherit; text-align: inherit;">use the confirmation code below to complete the</span></div><div style="text-align: justify;"><span style="font-family: &quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif; font-style: inherit; font-variant-ligatures: inherit; font-variant-caps: inherit; font-weight: inherit; text-align: inherit;">process. If you did not make this request, please</span></div><div style="text-align: justify;"><span style="font-family: &quot;Lucida Grande&quot;, Helvetica, Verdana, Arial, sans-serif; font-style: inherit; font-variant-ligatures: inherit; font-variant-caps: inherit; font-weight: inherit; text-align: inherit;">ignore this email.</span></div><br/><span style="font-size: 14px; font-weight: 700;">${ctx.get('otp')}</span><br/><br/><div><span style="font-size: 20px; font-weight: bold; font-style: inherit; font-variant-ligatures: inherit; font-variant-caps: inherit; text-align: inherit;">You get a lot of password reset emails?</span></div><div><span style="font-family: Verdana, Arial, sans-serif; font-size: inherit; font-style: inherit; font-variant-ligatures: inherit; font-variant-caps: inherit; font-weight: inherit; text-align: inherit;">You can change your account settings to request</span></div><div><span style="font-family: Verdana, Arial, sans-serif; font-size: inherit; font-style: inherit; font-variant-ligatures: inherit; font-variant-caps: inherit; font-weight: inherit; text-align: inherit;">personal information in order to reset your password.</span></div><br/>

                                        </div></td><td style="text-align:left"><br/><span style="font-size:17px;font-weight: bold;">
                                            </span><br/><br/>
                                        </td>

                                        
                                </tr>
                                <tr><td style="text-align:center;">
                                  <hr width="100%" style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin: 16px 0px 16px 0px;"/>
                                </td></tr>
                            </tbody></table>
                        </td>
                    </tr>
                    <!-- FOOTER -->
                    <tr>
                        <td align="center" style="min-width: 590px;">
                            <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: white; font-size: 11px; padding: 0px 8px 0px 8px; border-collapse:separate;">
                                <tr><td valign="middle" align="left">
                                    ${object.company_id.name}
                                </td></tr>
                                <tr><td valign="middle" align="left" style="opacity: 0.7;">
                                    ${object.company_id.phone}
                                    % if object.company_id.email
                                        | <a href="'mailto:%s' % ${object.company_id.email}" style="text-decoration:none; color: #454748;">${object.company_id.email}</a>
                                    % endif
                                    % if object.company_id.website
                                        | <a href="'%s' % ${object.company_id.website}" style="text-decoration:none; color: #454748;">
                                        ${object.company_id.website}
                                    </a>
                                    % endif
                                </td></tr>
                            </table>
                        </td>
                    </tr>
                </tbody>
                </table>
                </td></tr>
                <!-- POWERED BY -->
                <tr><td align="center" style="min-width: 590px;">
                    <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: #F1F1F1; color: #454748; padding: 8px; border-collapse:separate;">
                    <tr><td style="text-align: center; font-size: 13px;">
                        Powered by <a target="_blank" href="https://www.hashmicro.com?utm_source=db&amp;utm_medium=auth" style="color: #875A7B;">HashMicro</a>
                    </td></tr>
                    </table>
                </td></tr>
                </table>
            </field>
            <!-- <field name="lang">${object.lang}</field> -->
            <field name="auto_delete" eval="True"/>
        </record>

      


       



    </data>
</odoo>
