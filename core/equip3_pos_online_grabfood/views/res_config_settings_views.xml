<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	
	<record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='pricing_setting_container']" position="after">
                <div class="app_settings_block">
				    <h2>Grabfood Configuration</h2>
				    <div class="row mt16 o_settings_container">

					    <div class="col-xs-12 col-md-6">
						    <div class="o_setting_box">
						    	<div class="clearfix mb16">
						    		<label for="grabfood_environment"/>
							        <div class="text-muted"></div>
							        <div class="mt4">
							            <field name="grabfood_environment" required="1"/>
							        </div>
							    </div>
							</div>
						    <div class="o_setting_box"  attrs="{'invisible': [('grabfood_environment','!=','production')]}">
						    	<div class="clearfix mb16">
						        	<label for="grabfood_production_client_id"/>
							        <div class="text-muted"> </div>
							        <div class="mt4">
							            <field name="grabfood_production_client_id"/>
							        </div>
							    </div>
						    	<div class="clearfix mb16">
						        	<label for="grabfood_production_client_secret"/>
							        <div class="text-muted"> </div>
							        <div class="mt4">
							            <field name="grabfood_production_client_secret"/>
							        </div>
							    </div> 
						    </div>
						    <div class="o_setting_box"  attrs="{'invisible': [('grabfood_environment','!=','sandbox')]}">
						    	<div class="clearfix mb16">
						        	<label for="grabfood_sandbox_client_id"/>
							        <div class="text-muted"> </div>
							        <div class="mt4">
							            <field name="grabfood_sandbox_client_id" placeholder="Sandbox client ID"/>
							        </div>
							    </div>
						    	<div class="clearfix mb16">
						        	<label for="grabfood_sandbox_client_secret"/>
							        <div class="text-muted"> </div>
							        <div class="mt4">
							            <field name="grabfood_sandbox_client_secret" placeholder="Sandbox client secret"/>
							        </div>
							    </div> 
						    </div>
					    </div>
					    <div class="col-xs-12 col-md-6 o_setting_box">
						    <div class="o_setting_box">
						    	<div class="clearfix mb16"><b>Online outlet API</b></div>
						    	<div class="clearfix mb16">
						        	<label for="oloutlet_client_id"/>
							        <div class="text-muted"> </div>
							        <div class="mt4">
							            <field name="oloutlet_client_id"/>
							        </div>
							    </div>
						    	<div class="clearfix mb16">
						        	<label for="oloutlet_client_secret"/>
							        <div class="text-muted"> </div>
							        <div class="mt4">
							            <field name="oloutlet_client_secret"/>
							        </div>
							    </div> 
						    </div>
					    </div>

					    <div class="col-xs-12 col-md-12 o_setting_box">
					    	<button name="equip3_pos_online_outlet.pos_online_outlet_action" type="action">Outlet Settings</button>
					    </div>
					    
					</div>
				</div>
            </xpath>
        </field>
    </record>
</odoo>