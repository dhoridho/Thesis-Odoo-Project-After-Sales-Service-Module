<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="OnlineOrderReadyTimePopup" owl="1">
        <div role="dialog" class="modal-dialog">
            <div class="popup popup-confirm online-order-ready-time-popup">
                <header class="title drag-handle" style="text-align:left;">
                    <t t-esc="props.title"/>
                </header>
                <main class="body">
                    <div class="online-order-ready-time-content clearfix">
                        <div class="pull-left r_popup_left" style="width: 50%;">
                            <div class="popup_item" style="text-align: left;">
                                <strong class="rsv-label" style="width: 30%; display: inline-block;">Duration </strong>
                                <select name="duration" class="form-control" style="width: 70% !important;text-align: center;">
                                    <option value="5"> 5 minutes</option>
                                    <option value="10"> 10 minutes</option>
                                    <option value="15"> 15 minutes</option>
                                    <option value="20"> 20 minutes</option>
                                    <option value="25"> 25 minutes</option>
                                    <option value="30"> 30 minutes</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </main>
                <footer class="footer">
                    <div class="button confirm" t-on-click="confirm">
                        <t t-esc="props.confirmText"/>
                    </div>
                    <div class="button cancel" t-on-click="cancel">
                        <t t-esc="props.cancelText"/>
                    </div>
                </footer>
            </div>
        </div>
    </t>

</templates>
