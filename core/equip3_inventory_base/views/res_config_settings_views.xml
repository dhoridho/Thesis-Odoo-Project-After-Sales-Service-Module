<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.stock.account</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock_account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='stock']" position="inside">
                <h2 name="inventory_adjustment_label">Inventory Adjustment</h2>
                <div class="row mt16 o_settings_container" name="inventory_adjustment_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="stock_inventory_validation_scheduler_container">
                        <div class="o_setting_left_pane">
                            <field name="stock_inventory_validation_scheduler"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="stock_inventory_validation_scheduler"/>
                            <div class="text-muted" name="stock_inventory_validation_scheduler_description">
                                Process inventory adjustment validation in the background. (Recommended for large data).
                            </div>
                            <div class="content-group" attrs="{'invisible': [('stock_inventory_validation_scheduler', '=', False)]}">
                                <div class="o_setting_box p-0">
                                    <div class="o_setting_left_pane w-100">
                                        <label for="stock_inventory_validation_per_batch" string="Lines per Batch"/>
                                        <div class="text-muted" name="stock_inventory_validation_per_batch_description">
                                            Inventory adjustment lines per batch.
                                        </div>
                                    </div>
                
                                    <div class="o_setting_right_pane m-0">
                                        <field name="stock_inventory_validation_per_batch"/>
                                    </div>
                                </div>
                            </div>
    
                        </div>
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[@name='valuation_setting_container']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" name="cost_per_warehouse">
                    <div class="o_setting_left_pane">
                        <field name="is_cost_per_warehouse"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="is_cost_per_warehouse"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    
</odoo>