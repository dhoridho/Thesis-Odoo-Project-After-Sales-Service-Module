<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="product_template_form_view_procurement_button" model="ir.ui.view">
        <field name="name">product.template.form.view.procurement.button</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.product_template_form_view_procurement_button"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <field name="is_cost_per_warehouse" invisible="1"/>
            </xpath>
            <xpath expr="//button[@name='action_product_tmpl_forecast_report']" position="after">
                <button name="action_view_warehouse_standard_price" type="object" class="oe_stat_button" icon="fa-dollar" attrs="{'invisible': ['|', ('is_cost_per_warehouse', '!=', True), ('product_variant_count', '>', 1)]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Warehouse<br/>Costs</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

    <record id="product_form_view_procurement_button" model="ir.ui.view">
        <field name="name">product.product.procurement</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="stock.product_form_view_procurement_button"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <field name="is_cost_per_warehouse" invisible="1"/>
            </xpath>
            <xpath expr="//button[@name='action_product_forecast_report']" position="after">
                <button name="action_view_warehouse_standard_price" type="object" class="oe_stat_button" icon="fa-dollar" attrs="{'invisible': [('is_cost_per_warehouse', '!=', True)]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Warehouse<br/>Costs</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

    <record id="view_product_warehouse_price_tree_editable" model="ir.ui.view">
        <field name="name">view.product.warehouse.price.tree.editable</field>
        <field name="model">product.warehouse.price</field>
        <field name="arch" type="xml">
            <tree string="Warehouse Prices" editable="bottom">
                <field name="product_id" invisible="1"/>
                <field name="cost_method" invisible="1"/>
                <field name="company_id" invisible="context.get('invisible_company') is True"/>
                <field name="currency_id" invisible="1"/>
                <field name="warehouse_id"/>
                <field name="has_done_moves" invisible="1"/>
                <field name="standard_price" widget="monetary" options="{'currency_field': 'currency_id', 'field_digits': True}" 
                       attrs="{'readonly': [('cost_method', 'in', ('average', 'fifo')), ('has_done_moves', '=', True)]}"/>
            </tree>
        </field>
    </record>

    <record id="view_product_warehouse_price_tree" model="ir.ui.view">
        <field name="name">view.product.warehouse.price.tree</field>
        <field name="model">product.warehouse.price</field>
        <field name="inherit_id" ref="equip3_inventory_base.view_product_warehouse_price_tree_editable"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="create">0</attribute>
                <attribute name="delete">0</attribute>
                <attribute name="edit">0</attribute>
                <attribute name="editable"></attribute>
            </xpath>
        </field>
    </record>

</odoo>