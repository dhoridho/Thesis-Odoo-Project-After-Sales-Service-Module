<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="stock_inventory_line_tree" model="ir.ui.view">
        <field name="name">stock.inventory.line.tree</field>
        <field name="model">stock.inventory.line</field>
        <field name="inherit_id" ref="stock.stock_inventory_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_uom_id']" position="after">
                <field name="currency_id" invisible="1"/>
                <field name="theoretical_unit_price" width="0.5" string="Current Unit Price" force_save="1" readonly="1" optional="show"/>
                <field name="unit_price" width="0.5" string="New Unit Price"/>
                <field name="difference_unit_price" optional="show" width="0.5"/>
            </xpath>
        </field>
    </record>

    <record id="view_inventory_form" model="ir.ui.view">
        <field name="name">stock.inventory.form</field>
        <field name="model">stock.inventory</field>
        <field name="inherit_id" ref="stock.view_inventory_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <field name="account_move_ids" widget="many2many_tags" invisible="1"/>
            </xpath>
        </field>
    </record>

</odoo>