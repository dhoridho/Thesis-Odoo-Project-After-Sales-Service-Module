<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- cutting.plan tree view -->
    <record id="view_cutting_plan_tree" model="ir.ui.view">
        <field name="name">cutting.plan.view.tree</field>
        <field name="model">cutting.plan</field>
        <field name="arch" type="xml">
            <tree string="Cutting Plan" default_order="priority desc, date_start desc">
                <field name="priority" widget="priority" nolabel="1"/>
                <field name="name"/>
                <field name="plan_name"/>
                <field name="ppic_id"/>
                <field name="date_start" string="Scheduled Date Start"/>
                <field name="date_end" string="Scheduled Date Finished"/>
                <field name="state" widget='badge' decoration-secondary="state == 'draft'"
                                                   decoration-warning3="state == 'to_be_approved'"
                                                   decoration-warning2="state == 'approved'"
                                                   decoration-danger="state == 'rejected'"
                                                   decoration-primary="state == 'confirm'"
                                                   decoration-warning="state == 'progress'"
                                                   decoration-success="state == 'done'"
                                                   decoration-danger3="state == 'cancel'"/>
            </tree>
        </field>
    </record>

    <!-- cutting.plan form view -->
    <record id="view_cutting_plan_form" model="ir.ui.view">
        <field name="name">cutting.plan.view.form</field>
        <field name="model">cutting.plan</field>
        <field name="arch" type="xml">
            <form string="Cutting Plan">
            <header>
                <field name="user_is_approver" invisible="1"/>
                
                <field name="state" widget="statusbar" statusbar_visible="draft,approved,progress,done" attrs="{'invisible': ['|', ('is_matrix_on', '!=', True), ('state', 'in', ['cancel', 'rejected'])]}"/>
                <field name="state_1" widget="statusbar" statusbar_visible="draft,rejected,progress,done" attrs="{'invisible': ['|', ('is_matrix_on', '!=', True), ('state', '!=', 'rejected')]}"/>
                <field name="state_2" widget="statusbar" statusbar_visible="draft,progress,done" attrs="{'invisible': ['|', ('is_matrix_on', '!=', False), ('state', '=', 'cancel')]}"/>
                <field name="state_3" widget="statusbar" statusbar_visible="draft,confirm,cancelled" attrs="{'invisible': [('state', '!=', 'cancel')]}"/>
                
                <button name="button_confirm" string="Confirm" type="object" class="btn-primary" attrs="{'invisible': ['|', '&amp;', ('is_matrix_on', '=', True), ('state', '!=', 'approved'), '&amp;', ('is_matrix_on', '=', False), ('state', '!=', 'draft')]}"/>
                <button name="button_add_cutting" string="Add Cutting" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                <button name="button_done" string="Mark as Done" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'progress')]}"/>
                <button name="action_approval" string="Request Approval" type="object" class="btn-primary" attrs="{'invisible': ['|', ('is_matrix_on', '!=', True), ('state', '!=', 'draft')]}"/>
                <button name="action_approve" string="Approve" type="object" class="btn-primary" attrs="{'invisible': ['|', '|', ('is_matrix_on', '!=', True), ('state', '!=', 'to_be_approved'), ('user_is_approver', '=', False)]}"/>
                <button name="action_reject" string="Reject" type="object" class="btn-primary" attrs="{'invisible': ['|', '|', ('is_matrix_on', '!=', True), ('state', '!=', 'to_be_approved'), ('user_is_approver', '=', False)]}"/>
                <button name="button_cancel" string="Cancel" type="object" attrs="{'invisible': [('state', 'not in', ['draft','to_be_approved','approved','confirm','rejected'])]}"/>
            </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="priority" widget="priority" class="mr-3"/>
                            <field name="name" placeholder="Cutting Plan" nolabel="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="plan_name" attrs="{'readonly': [('state', '=', 'to_be_approved')]}"/>
                            <field name="ppic_id" attrs="{'readonly': [('state', '=', 'to_be_approved')]}" options="{'no_create': True, 'no_create_edit':True}"/>
                            <label for="date_start" string="Scheduled Date"/>
                            <div class="oe_inline">
                                <field name="date_start" class="mr8 oe_inline" string="Scheduled Date"/>
                                <strong class="mr8 oe_inline">to</strong>
                                <field name="date_end" class="oe_inline"/>
                            </div>
                            <field name="approval_matrix_id" readonly="1" force_save="1" attrs="{'invisible': [('is_matrix_on', '=', False)], 'required': [('is_matrix_on', '=', True)]}"/>
                        </group>
                        <group>
                            <field name="analytic_tag_ids" widget="many2many_tags" attrs="{'readonly': [('state', '=', 'to_be_approved')]}" options="{'no_create': True, 'no_create_edit':True}"/>
                            <field name="company_id"/>
                            <field name="is_branch_required" invisible="1"/>
                            <field name="branch_id" attrs="{'readonly': [('state', '=', 'to_be_approved')], 'required': [('is_branch_required', '=', True)]}" options="{'no_create': True, 'no_create_edit':True}"/>
                            <field name="create_date" string="Created On" readonly="1" force_save="1"/>
                            <field name="create_uid" string="Created By" readonly="1" force_save="1"/>
                            <field name="is_matrix_on" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="cutting_order" string="Cutting Orders">
                            <field name="cutting_order_ids">
                                <tree string="Cutting Orders" create="false" edit="false">
                                    <field name="cutting_plan_id" invisible="1"/>
                                    <field name="name"/>
                                    <field name="product_id"/>
                                    <field name="fixed_length"/>
                                    <field name="fixed_width"/>
                                    <field name="fixed_height"/>
                                    <field name="date_planned_start" string="Scheduled Date"/>
                                    <field name="date_planned_finished" string="Scheduled End Date"/>
                                    <field name="state" string="State"/>
                                    
                                    <!-- need for button visibility -->
                                    <field name="company_id" invisible="1"/>
                                    <field name="is_matrix_on" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page name="original_product" string="Original Product">
                            <field name="cutting_order_lot_ids">
                                <tree string="Original Product">
                                    <field name="cutting_id" string="Cutting Order"/>
                                    <field name="product_id"/>
                                    <field name="lot_id" string="Lot/Serial Number"/>
                                    <field name="product_qty" string="Quantity"/>
                                    <field name="product_uom_id" string="Unit of Measure"/>
                                    <field name="volume"/>
                                </tree>
                            </field>
                        </page>
                        <page name="approval_matrix_lines" string="Approval Matrix Lines" attrs="{'invisible': [('is_matrix_on', '!=', True)]}">
                            <field name="approval_matrix_line_ids" context="{
                                'tree_view_ref': 'equip3_manuf_operations.view_mrp_approval_matrix_entry_tree',
                                'form_view_ref': 'equip3_manuf_operations.view_mrp_approval_matrix_entry_form',
                            }"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- cutting.plan search view -->
    <record id="view_search_cutting_plan" model="ir.ui.view">
        <field name="name">cutting.plan.view.search</field>
        <field name="model">cutting.plan</field>
        <field name="arch" type="xml">
            <search string="Cutting Plan">
                <field name="name"/>
                <filter name="starred" string="Starred" domain="[('priority', '=', 1)]"/>

                <separator/>
                <filter name="state_draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="state_to_be_approved" string="To be Approved" domain="[('state', '=', 'to_be_approved')]"/>
                <filter name="state_approved" string="Approved" domain="[('state', '=', 'approved')]"/>
                <filter name="state_rejected" string="Rejected" domain="[('state', '=', 'rejected')]"/>
                <filter name="state_confirm" string="Confirmed" domain="[('state', '=', 'confirm')]"/>
                <filter name="state_progress" string="In Progress" domain="[('state', '=', 'progress')]"/>
                <filter name="state_done" string="Done" domain="[('state', '=', 'done')]"/>
                <filter name="state_cancel" string="Cancelled" domain="[('state', '=', 'cancel')]"/>

                <group string="Group By...">
                    <filter name="groupby_state" string="Status" domain="[]" context="{'group_by': 'state'}"/>
                    <filter string="Scheduled Date" name="scheduled_date" domain="[]" context="{'group_by': 'date_start'}"/>
                </group>

                <searchpanel>
                    <field name="ppic_id"/>
                    <field name="state"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- cutting.plan action window -->
    <record id="action_view_cutting_plan" model="ir.actions.act_window">
        <field name="name">Cutting Plan</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cutting.plan</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Cutting Plan
            </p>
        </field>
    </record>
    
</odoo>
