<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_cutting_inventory_custom_form_view" model="ir.ui.view">
        <field name="name">view.cutting.custom.form.view</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_stock_move_operations"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="sml_cutting_unit" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="view_stock_move_line_no_suggest_inherit" model="ir.ui.view">
        <field name="name">stock.move.line.suggest.inherit</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="length" attrs="{'column_invisible' : [('parent.sml_cutting_unit', '=', False)],'required': [('parent.sml_cutting_unit', '=', True)]}"/>
                <field name="width" attrs="{'column_invisible' : [('parent.sml_cutting_unit', '=', False)],'required': [('parent.sml_cutting_unit', '=', True)]}"/>
                <field name="height" attrs="{'column_invisible' : [('parent.sml_cutting_unit', '=', False)],'required': [('parent.sml_cutting_unit', '=', True)]}"/>
                <field name="cutting_uom" attrs="{'column_invisible' : [('parent.sml_cutting_unit', '=', False)]}"/>
            </xpath>
        </field>
    </record>

</odoo>