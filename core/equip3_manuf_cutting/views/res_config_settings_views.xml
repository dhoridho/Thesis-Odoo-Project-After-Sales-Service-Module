<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="equip3_manuf_accessright_settings.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='mrp']" position="after">
                <div class="app_settings_block" data-string="Cutting" string="Cutting" data-key="equip3_manuf_cutting" groups="base.group_no_one" attrs="{'invisible': [('cutting', '=', False)]}">
                    <h2>Cut Product Serializer</h2>
                    <div class="row mt16 o_settings_container" name="cutting_operations_setting_container">
                        <div class="col-lg-6 col-12 o_setting_box" id="cutting">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="autogenerated_based_methods"/>
                                <div class="text-muted">New "Cut Product" lot/serial number format in cutting orders</div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="autogenerated_based_methods" class="o_light_label w-100" widget="radio"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h2>Approval Matrix</h2>
                    <div class="row mt16 o_settings_container" name="approval_matrix_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="approval_matrix_settings">
                            <div class="o_setting_left_pane">
                                <field name="is_cutting_plan"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_cutting_plan"/>
                                <div class="text-muted">
                                    Activate Approval Matrix For Cutting Plan
                                </div>
                                <div class="content-group mt-3" attrs="{'invisible': [('is_cutting_plan', '!=', True)]}">
                                    <field name="send_whatsapp_notif_cp" class="oe_inline"/>
                                    <label for="send_whatsapp_notif_cp" string="Whatsapp Notification"/>
                                    <div class="text-muted">
                                        Will send whatsapp notification when there is a request for approval
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" id="broadcast_order">
                            <div class="o_setting_left_pane">
                                <field name="is_cutting_order"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_cutting_order"/>
                                <div class="text-muted">
                                    Activate Approval Matrix For Cutting Order
                                </div>
                                <div class="content-group mt-3" attrs="{'invisible': [('is_cutting_order', '!=', True)]}">
                                    <field name="send_whatsapp_notif_co" class="oe_inline"/>
                                    <label for="send_whatsapp_notif_co" string="Whatsapp Notification"/>
                                    <div class="text-muted">
                                        Will send whatsapp notification when there is a request for approval
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>