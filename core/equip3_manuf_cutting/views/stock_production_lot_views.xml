<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_production_lot_form_inh" model="ir.ui.view">
		<field name="name">stock.view.production.lot.form.inh</field>
		<field name="model">stock.production.lot</field>
		<field name="inherit_id" ref="stock.view_production_lot_form"/>
		<field name="arch" type="xml">
			<xpath expr="//notebook" position="inside">
				<page string="Cutting" name="cutting" attrs="{'invisible' : [('cutting_unit', '=', False)]}">
					<group>
						<group>
							<field name="cutting_unit" invisible="1"/>
							<label for="length"/>
							<div name="length_div">
								<field name="length" readonly="1" class="oe_inline mr-2"/>
								<field name="cutting_uom" class="oe_inline"/>
							</div>
							<label for="width"/>
							<div name="width_div">
								<field name="width" readonly="1" class="oe_inline mr-2"/>
								<field name="cutting_uom" class="oe_inline"/>
							</div>
							<label for="height"/>
							<div name="height_div">
								<field name="height" readonly="1" class="oe_inline mr-2"/>
								<field name="cutting_uom" class="oe_inline"/>
							</div>
						</group>
					</group>
				</page>
			</xpath>
		</field>
	</record>

</odoo>