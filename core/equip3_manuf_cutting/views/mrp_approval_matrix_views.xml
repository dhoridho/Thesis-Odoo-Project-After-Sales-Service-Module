<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_view_mrp_approval_matrix_cutting_plan" model="ir.actions.act_window">
        <field name="name">Cutting Plan Approval Matrix</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.approval.matrix</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="equip3_manuf_operations.mrp_plan_approval_matrix_tree_view"/>
        <field name="domain">[('matrix_type', '=', 'cp')]</field>
        <field name="context">{'default_matrix_type':'cp'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Cutting Plan Approval Matrix
            </p>
        </field>
    </record>

    <record id="action_view_mrp_approval_matrix_cutting_order" model="ir.actions.act_window">
        <field name="name">Cutting Order Approval Matrix</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.approval.matrix</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="equip3_manuf_operations.mrp_plan_approval_matrix_tree_view"/>
        <field name="domain">[('matrix_type', '=', 'co')]</field>
        <field name="context">{'default_matrix_type':'co'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Cutting Order Approval Matrix
            </p>
        </field>
    </record>
</odoo>