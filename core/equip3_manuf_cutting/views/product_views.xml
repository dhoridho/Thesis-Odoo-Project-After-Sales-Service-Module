<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="product_template_only_form_view_inh" model="ir.ui.view">
		<field name="name">product.template.only.form.view.inh</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_only_form_view"/>
		<field name="arch" type="xml">
			<xpath expr="//notebook" position="inside" >
                    <page string="Cutting" name="cutting" attrs="{'invisible': ['|',('tracking', '=', 'none'),('check_cutting', '=', False)]}">
						<group>
							<group>
								<field name="equi3_company_id" invisible="1"/>
								<field name="check_cutting" invisible="1"/>
								<field name="is_cutting_product"/>
								<field name="cutting_unit_measure" attrs="{'invisible': [('is_cutting_product', '=', False)], 'required': [('is_cutting_product', '=', True)]}"/>
							</group>
						</group>
                    </page>
                </xpath>
		</field>
	</record>

	<record id="product_normal_form_view_inh" model="ir.ui.view">
		<field name="name">product.normal.form.view.inh</field>
		<field name="model">product.product</field>
		<field name="inherit_id" ref="product.product_normal_form_view"/>
		<field name="arch" type="xml">
			<xpath expr="//notebook" position="inside">
				<page string="Cutting" name="cutting" attrs="{'invisible': ['|',('tracking', '=', 'none'),('check_cutting', '=', False)]}">
						<group>
							<group>
								<field name="equi3_company_id" invisible="1"/>
								<field name="check_cutting" invisible="1"/>
								<field name="is_cutting_product"/>
								<field name="cutting_unit_measure" attrs="{'invisible': [('is_cutting_product', '=', False)], 'required': [('is_cutting_product', '=', True)]}"/>
							</group>
						</group>
                    </page>
			</xpath>
		</field>
	</record>

</odoo>