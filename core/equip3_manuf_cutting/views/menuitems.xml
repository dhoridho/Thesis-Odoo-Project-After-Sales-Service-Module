<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="cutting_flow_wizard_action_client" model="ir.actions.client">
        <field name="name">Cutting Flow</field>
        <field name="tag">cutting_flow_tag</field>
    </record>

	<menuitem name="Cutting"
			  web_icon="equip3_manuf_cutting,static/description/icon.png"
			  id="menu_cutting_root"
			  sequence="45">

		<menuitem id="cutting_flow_wizard_menu"
				  name="Cutting Flow"
				  action="cutting_flow_wizard_action_client"
				  sequence="1"/>

		<menuitem id="mrp_cutting_operation"
				  name="Operations"
				  sequence="5">
			
			<menuitem id="mrp_cutting_plan"
					  name="Cutting Plan"
					  action="action_view_cutting_plan"
					  sequence="10"/>

			<menuitem id="mrp_cutting_order"
					  name="Cutting Order"
					  action="action_view_cutting_order"
					  sequence="20"/>
		</menuitem>

		<menuitem id="mrp_cutting_master_data"
				  name="Master Data"
				  sequence="10">

			<menuitem id="menu_cutting_products"
					  name="Products"
					  action="product.product_template_action"/>

			<menuitem id="menu_cutting_product_variants"
					  name="Product Variants"
					  action="product.product_normal_action"
					  groups="product.group_product_variant"/>

			<menuitem id="menu_cutting_workcenters"
					  action="mrp.mrp_workcenter_action"
					  groups="mrp.group_mrp_routings"/>
					  
			<menuitem id="menu_cutting_traceability"
					  name="Lots/Serial Numbers"
					  action="stock.action_production_lot_form"
					  groups="stock.group_production_lot"/>
		</menuitem>

		<menuitem id="configuration_menu"
				  name="Configuration"
				  sequence="80">
			
			<menuitem id="cutting_configuration_menu_act" 
					  name="Configuration" 
					  sequence="10">

				<menuitem id="menu_cutting_settings"
						  name="Settings"
						  action="action_cutting_configuration"
						  sequence="10"/>

				<menuitem id="menu_cutting_approval_matrix"
						  name="Approval Matrix"
						  sequence="20">

					<menuitem id="menu_cutting_cutting_plan"
							  name="Cutting Plan"
							  action="action_view_mrp_approval_matrix_cutting_plan"
							  sequence="10"/>

					<menuitem id="menu_cutting_cutting_order"
							  name="Cutting Order"
							  action="action_view_mrp_approval_matrix_cutting_order"
							  sequence="20"/>
				</menuitem>

			</menuitem>
		</menuitem>
	</menuitem>

	<record id="menu_cutting_root" model="ir.ui.menu">
        <field name="equip_category_id" ref="equip3_hashmicro_ui.category_operations"/>
    </record>

	<!--Cutting Operations-->
    <record id="equip3_manuf_cutting.mrp_cutting_operation" model= "ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-parent-cutting-operations</field>
    </record>

    <!--Cutting Master Data-->
    <record id="equip3_manuf_cutting.mrp_cutting_master_data" model= "ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-parent-cutting-master-data-alternatif</field>
    </record>

    <!--Cutting Configuration-->
    <record id="equip3_manuf_cutting.configuration_menu" model= "ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-parent-cutting-configuration</field>
    </record>

    <!-- FLOW -->
    <record id="equip3_manuf_cutting.cutting_flow_wizard_menu" model= "ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-main-flow</field>
    </record>

</odoo>