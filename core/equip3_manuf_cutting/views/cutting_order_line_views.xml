<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_cutting_order_line_form" model="ir.ui.view">
        <field name="name">view.cutting.order.line.form</field>
        <field name="model">cutting.order.line</field>
        <field name="arch" type="xml">
            <form string="Cutting Line">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,progress,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="cutting_lot_id" invisible="1"/>
                            <field name="cutting_line_id" invisible="1"/>
                            <field name="cutting_leftover_id" invisible="1"/>
                            <field name="lot_id" attrs="{'invisible': [('cutting_lot_id', '=', False)]}"/>

                            <field name="cutting_id"/>
                            <field name="product_id"/>
                            <label for="product_qty"/>
                            <div class="o_row">
                                <field name="product_qty"/>
                                <field name="product_uom_id"/>
                            </div>
                            <label for="cut_qty" attrs="{'invisible': [('cutting_line_id', '=', False)]}"/>
                            <div class="o_row" attrs="{'invisible': [('cutting_line_id', '=', False)]}">
                                <field name="cut_qty"/>
                                <field name="product_uom_id"/>
                            </div>
                            <field name="fixed_length" attrs="{'invisible': [('cutting_line_id', '=', False)]}"/>
                            <field name="fixed_width" attrs="{'invisible': [('cutting_line_id', '=', False)]}"/>
                            <field name="fixed_height" attrs="{'invisible': [('cutting_line_id', '=', False)]}"/>
                        </group>
                        <group>
                            <field name="lot_leftover_id" string="Leftover" attrs="{'invisible': [('cutting_lot_id', '=', False)]}"/>
                            <field name="line_leftover_id" string="Leftover" attrs="{'invisible': [('cutting_line_id', '=', False)]}"/>
                            <label for="length"/>
                            <div class="o_row">
                                <field name="length"/>
                                <field name="cutting_uom_id"/>
                            </div>
                            <label for="width"/>
                            <div class="o_row">
                                <field name="width"/>
                                <field name="cutting_uom_id"/>
                            </div>
                            <label for="height"/>
                            <div class="o_row">
                                <field name="height"/>
                                <field name="cutting_uom_id"/>
                            </div>
                            <label for="volume"/>
                            <div class="o_row">
                                <field name="volume"/>
                                <field name="cutting_uom_id"/>
                            </div>
                            <label for="total_volume" attrs="{'invisible': [('cutting_line_id', '=', False)]}"/>
                            <div class="o_row" attrs="{'invisible': [('cutting_line_id', '=', False)]}">
                                <field name="total_volume"/>
                                <field name="cutting_uom_id"/>
                            </div>
                            <field name="allowed_lot_ids" widget="many2many_tags" string="Allowed Lots"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Pending Lot/Serial Numbers" name="name_ids" attrs="{'invisible': ['|', ('cutting_line_id', '=', False), ('state', '=', 'done')]}">
                            <field name="name_ids">
                                <tree string="Pending Lot/Serial Numbers">
                                    <field name="line_id" invisible="1"/>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Created Lot/Serial Numbers" name="lot_ids" attrs="{'invisible': ['|', ('cutting_line_id', '=', False), ('state', '!=', 'done')]}">
                            <field name="lot_ids">
                                <tree string="Created Lot/Serial Numbers">
                                    <field name="name"/>
                                    <field name="product_qty"/>
                                    <field name="product_uom_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Finished Moves" name="move_ids" attrs="{'invisible': [('state', '!=', 'done')]}">
                            <field name="move_ids" context="{'tree_view_ref': 'stock.view_move_tree', 'form_view_ref': 'stock.view_move_form'}"/>
                        </page>
                        <page string="Cut Lines" name="line_ids" attrs="{'invisible': [('cutting_leftover_id', '=', False)]}">
                            <field name="line_ids">
                                <tree string="Cut Lines">
                                    <field name="name_ids" widget="many2many_tags" string="New Lot/Serial Number"/>
                                    <field name="lot_id" string="Original Lot/Serial Number"/>
                                    <field name="cut_qty" string="To Cut"/>
                                    <field name="product_qty" string="Quantity"/>
                                    <field name="product_uom_id" string="UoM"/>
                                    <field name="length"/>
                                    <field name="cutting_uom_id" string="Length UoM"/>
                                    <field name="width"/>
                                    <field name="cutting_uom_id" string="Width UoM"/>
                                    <field name="height"/>
                                    <field name="cutting_uom_id" string="Height UoM"/>
                                    <field name="volume"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>