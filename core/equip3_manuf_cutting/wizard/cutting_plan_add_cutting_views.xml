<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="cutting_plan_add_cutting_wizard_view" model="ir.ui.view">
        <field name="name">cutting.plan.add.cutting.wizard.view</field>
        <field name="model">cutting.plan.add.cutting.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Cutting Order">
                <field name="cutting_plan_id" invisible="1"/>
                <field name="line_ids">
                    <tree editable="bottom">
                        <field name="wizard_id" invisible="1"/>
                        <field name="allowed_lot_ids" invisible='1'/>
                        <field name="product_id" options="{'no_create': True, 'no_create_edit':True}"/>
                        <field name="work_center_id" options="{'no_create': True, 'no_create_edit':True}"/>
                        <field name="lot_ids" widget="many2many_tags" options="{'create': False}"/>
                        <field name="fixed_length"/>
                        <field name="fixed_width"/>
                        <field name="fixed_height"/>
                    </tree>
                </field>
                <footer>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
