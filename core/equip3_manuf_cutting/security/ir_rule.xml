<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- cutting.plan -->
    <record id="cutting_plan_multi_company_rule" model="ir.rule">
        <field name="name">Cutting Plan Multi-Company</field>
        <field name="model_id" ref="model_cutting_plan"/>
        <field name="domain_force">[
            '|', 
                ('company_id', '=', False), 
                ('company_id', 'in', company_ids)
        ]</field>
    </record>

    <record id="cutting_plan_multi_branch_rule" model="ir.rule">
        <field name="name">Cutting Plan Multi-Branch</field>
        <field name="model_id" ref="model_cutting_plan"/>
        <field name="domain_force">[
            '|', 
                ('branch_id', '=', False), 
                ('branch_id', 'in', branch_ids)
        ]</field>
    </record>
    
    <!-- cutting.order -->
    <record id="cutting_order_multi_company_rule" model="ir.rule">
        <field name="name">Cutting Order Multi-Company</field>
        <field name="model_id" ref="model_cutting_order"/>
        <field name="domain_force">[
            '|', 
                ('company_id', '=', False), 
                ('company_id', 'in', company_ids)
        ]</field>
    </record>

    <record id="cutting_order_multi_branch_rule" model="ir.rule">
        <field name="name">Cutting Order Multi-Branch</field>
        <field name="model_id" ref="model_cutting_order"/>
        <field name="domain_force">[
            '|', 
                ('branch_id', '=', False), 
                ('branch_id', 'in', branch_ids)
        ]</field>
    </record>

</odoo>