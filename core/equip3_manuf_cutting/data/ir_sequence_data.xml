<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Sequences for Cutting Orders -->
        <record id="seq_cutting_order" model="ir.sequence">
            <field name="name">Cutting Orders</field>
            <field name="code">cutting.order</field>
            <field name="prefix">COR/%(y)s/%(month)s/%(day)s/</field>
            <field name="padding">3</field>
            <field name="use_date_range" eval="True"/>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Sequences for Cutting Plan -->
        <record id="seq_cutting_plan" model="ir.sequence">
            <field name="name">Cutting Plan</field>
            <field name="code">cutting.plan</field>
            <field name="prefix">CPN/%(y)s/%(month)s/%(day)s/</field>
            <field name="padding">3</field>
            <field name="use_date_range" eval="True"/>
            <field name="company_id" eval="False"/>
        </record>

    </data>
</odoo>
