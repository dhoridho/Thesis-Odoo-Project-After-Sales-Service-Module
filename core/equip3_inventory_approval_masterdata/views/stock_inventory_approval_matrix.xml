<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="stock_inventory_approval_matrix_inherit" model="ir.ui.view">
            <field name="name">stock.inventory.approval.matrix.view.form.inherit</field>
            <field name="model">stock.inventory.approval.matrix</field>
            <field name="inherit_id" ref="equip3_inventory_masterdata.view_form_approval_matrix_stock_inventory"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='si_approval_matrix_line_ids']/tree/field[@name='sequence2']" position="after">
                    <field name="approver_types" required="1"/>
                </xpath>
                <xpath expr="//field[@name='si_approval_matrix_line_ids']/tree/field[@name='user_ids']" position="attributes">
                    <attribute name="attrs" >{'readonly':[('approver_types','=','by_hierarchy')],'required':[('approver_types','=','specific_approver')]}</attribute>
                </xpath>
                
            </field>
        </record>
    
        
    
    </data>
    

</odoo>
