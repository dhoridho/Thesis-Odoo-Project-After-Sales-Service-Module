<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_form_stock_picking_internal_warehouse" model="ir.ui.view">
        <field name="name">view.stock.picking.transfer.goods</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <field name="is_transfer_good" invisible="1"/>
                <field name="is_readonly_origin" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='origin']" position="attributes">
                <attribute name="attrs">{'readonly': [('is_readonly_origin', '=', True)]}</attribute>
				<attribute name="force_save">1</attribute>
            </xpath>
            <xpath expr="//field[@name='move_ids_without_package']//tree" position="inside">
                <field name="origin" optional="hide"/>
            </xpath>
        </field>
    </record>

</odoo>