<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <menuitem id="menu_manufacturing_plan"
              name="Production Plan"
              parent="mrp.menu_mrp_manufacturing"
              action="action_mrp_plan"
              groups="equip3_manuf_accessright_settings.group_manufacturing_plan"
              sequence="5"/>

    <menuitem id="ks_gantt_view_mrp.ks_mrp_gantt_setting" 
              name="Gantt Settings" 
              action="ks_gantt_view_mrp.action_mrp_gantt_setting" 
              groups="mrp.group_mrp_manager"
              parent="equip3_manuf_masterdata.mrp_configuration_menu_act"
              sequence="15"/>

    <menuitem id="mrp.menu_mrp_routing_action" 
              name="Operations"
              action="mrp_routing_action" 
              groups="mrp.group_mrp_routings"
              parent="equip3_manuf_masterdata.mrp_configuration_menu_act"
              sequence="50"/>

    <menuitem id="ks_gantt_view_mrp.ks_gantt_view_mrp_production_import_menuitem" 
              name="Import Production" 
              groups="mrp.group_mrp_manager" 
              action="ks_gantt_view_mrp.action_gantt_view_mrp_production_import_id"
              parent="equip3_manuf_masterdata.mrp_configuration_menu_act"
              sequence="60"/>

    <menuitem id="ks_gantt_view_mrp.ks_gantt_view_work_order_import_menuitem" 
              name="Import Production Work Orders" 
              groups="mrp.group_mrp_manager" 
              action="ks_gantt_view_mrp.action_gantt_view_work_order_import_id"
              parent="equip3_manuf_masterdata.mrp_configuration_menu_act"
              sequence="70"/>

    <menuitem id="con_approval_matrix_menu" 
              name="Approval Matrix" 
              parent="equip3_manuf_masterdata.mrp_configuration_menu_act"
              sequence="80">

        <menuitem id="con_mrp_plan_menu" 
                  name="Production Plan" 
                  action="mrp_plan_approval_matrix_action" 
                  sequence="10"/>

        <menuitem id="con_mrp_order_menu" 
                  name="Production Order" 
                  action="mrp_order_approval_matrix_action" 
                  sequence="20"/>
    </menuitem>

    <menuitem id="menu_mrp_rejected_reason" 
              name="Reason" 
              action="action_view_mrp_approval_matrix_entry_reason" 
              parent="equip3_manuf_masterdata.mrp_configuration_menu_act"
              sequence="100"/>

    <menuitem id="menu_mrp_other_operation"
              name="Other Operations"
              parent="mrp.menu_mrp_root"
              sequence="25">

        <menuitem id="mrp.menu_mrp_unbuild"
              name="Unbuild Order" 
              action="mrp.mrp_unbuild"
              sequence="10"/>
    </menuitem>

    <record id="mrp.menu_mrp_production_action" model="ir.ui.menu">
        <field name="groups_id" eval="[(6, 0, [
            ref('mrp.group_mrp_manager'), 
            ref('equip3_manuf_accessright_settings.group_mrp_supervisor'),
            ref('equip3_manuf_accessright_settings.group_mrp_accountant')])
        ]"/>
    </record>

    <record model="ir.ui.menu" id="mrp.menu_mrp_root">
        <field name="name" eval="'Production'"/>
    </record>

</odoo>