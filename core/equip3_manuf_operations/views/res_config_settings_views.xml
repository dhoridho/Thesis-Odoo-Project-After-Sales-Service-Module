<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_config_settings_view_form_implementor" model="ir.ui.view">
        <field name="name">res_config_settings_view_form_implementor</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="equip3_manuf_accessright_settings.res_config_settings_view_form_implementor"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='is_manufacturing_plan']/parent::div" position="inside">
                <field name="mrp_plan_order_creation" widget="radio" attrs="{'invisible': [('is_manufacturing_plan', '=', False)]}" class="o_mrp_po_creation w-100"/>
            </xpath>
        </field>
    </record>

</odoo>