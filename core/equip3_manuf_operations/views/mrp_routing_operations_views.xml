<?xml version='1.0' encoding='utf-8'?>
<odoo>
        <record id="mrp_routing_workcenter_tree_view_inherit" model="ir.ui.view">
        <field name="name">mrp.routing.workcenter.tree</field>
        <field name="model">mrp.routing.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_routing_workcenter_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='time_cycle']" position="attributes">
                <attribute name="widget">float_time_hms</attribute>
                <attribute name="string">Duration (hours)</attribute>
            </xpath>
        </field>
    </record>

    <record id="mrp_routing_workcenter_form_view_inherit" model="ir.ui.view">
        <field name="name">mrp.routing.workcenter.form</field>
        <field name="model">mrp.routing.workcenter</field>
        <field name="inherit_id" ref="equip3_manuf_masterdata.mrp_rounting_workcenter_view_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='time_cycle_manual']" position="replace">
                <field name="time_cycle_manual" widget="float_time_hms" class="oe_inline"/> hours
            </xpath>
            <xpath expr="//field[@name='company_id']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
            <xpath expr="//field[@name='branch_id']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
        </field>
    </record>
</odoo>