<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_plan_approval_matrix_form_view" model="ir.ui.view">
        <field name="name">MRP Approval Matrix</field>
        <field name="model">mrp.approval.matrix</field>
        <field name="arch" type="xml">
            <form string="Approval Matrix">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="matrix_type" invisible="1"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                            <field name="is_branch_required" invisible="1"/>
                            <field name="branch_id" attrs="{'required': [('is_branch_required', '=', True)]}" options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Approver Lines" name="line_ids">
                            <field name="line_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                     <field name="message_follower_ids" widget="mail_followers"/>
                     <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="mrp_plan_approval_matrix_tree_view" model="ir.ui.view">
        <field name="name">MRP Approval Matrix </field>
        <field name="model">mrp.approval.matrix</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="branch_id"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="mrp_plan_approval_matrix_line_form_view" model="ir.ui.view">
        <field name="name">MRP Approval Matrix Lines</field>
        <field name="model">mrp.approval.matrix.line</field>
        <field name="arch" type="xml">
            <form string="Approval Matrix Lines">
                <sheet>
                    <group>
                        <group>
                            <field name="matrix_id" invisible="1"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="added_approver_ids" widget="many2many_tags" invisible="1"/> 
                            <field name="minimum_approver"/>
                            <field name="approver_ids"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="mrp_plan_approval_matrix_line_tree_view" model="ir.ui.view">
        <field name="name">MRP Approval Matrix Lines</field>
        <field name="model">mrp.approval.matrix.line</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="matrix_id" invisible="1"/>
                <field name="sequence_handle" widget="handle"/>
                <field name="sequence"/>
                <field name="added_approver_ids" widget="many2many_tags" invisible="1"/> 
                <field name="approver_ids" widget="many2many_tags" required="1" options="{'no_create': True, 'no_create_edit': True}"/>
                <field name="minimum_approver"/>
            </tree>
        </field>
    </record>

    <record id="mrp_plan_approval_matrix_action" model="ir.actions.act_window">
        <field name="name">Production Plan Approval Matrix</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.approval.matrix</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="mrp_plan_approval_matrix_tree_view"/>
        <field name="domain">[('matrix_type', '=', 'mp')]</field>
        <field name="context">{'default_matrix_type':'mp'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Production Plan Approval Matrix
            </p>
        </field>
    </record>

    <record id="mrp_order_approval_matrix_action" model="ir.actions.act_window">
        <field name="name">Production Order Approval Matrix</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.approval.matrix</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="mrp_plan_approval_matrix_tree_view"/>
        <field name="domain">[('matrix_type', '=', 'mo')]</field>
        <field name="context">{'default_matrix_type':'mo'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Production Order Approval Matrix
            </p>
        </field>
    </record>

</odoo>