<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mrp_reserve_material_lot_form" model="ir.ui.view">
        <field name="name">view.mrp.reserve.material.lot.form</field>
        <field name="model">mrp.reserve.material.lot</field>
        <field name="arch" type="xml">
            <form string="Reserve Material">
                <sheet>
                    <field name="product_id" invisible="1"/>
                    <field name="mrp_reserve_material_id" invisible="1"/>
                    <field name="mrp_rsv_mtr_id" invisible="1"/>
                    <field name="line_ids">
                        <tree string="Reserve Material" editable="bottom">
                            <field name="sequence" widget="handle" invisible="1"/>
                            <field name="warehouse_id" optional="hide" invisible="1"/>
                            <field name="location_id" optional="hide" invisible="1"/>
                            <field name="production_id" string="Production Order" invisible="1"/>
                            <field name="workorder_id" invisible="1"/>
                            <field name="product_id" invisible="1"/>
                            <field name="product_uom_qty" invisible="1"/>
                            <field name="reserved_uom_qty" invisible="1"/>
                            <field name="lot_id" required="True"/>
                            <field name="to_reserve_uom_qty" attrs="{'readonly':[('product_tracking','=','serial')]}" force_save="1"/>
                            <field name="product_uom" invisible="1"/>
                            <field name="product_tracking" invisible="1"/>
                            <field name="mrp_reserve_material_id" invisible="1"/>
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button name="action_confirm" type="object" string="Confirm" class="oe_highlight"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>