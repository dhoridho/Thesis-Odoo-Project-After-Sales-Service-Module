<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="manu_change_component_wiz_form" model="ir.ui.view">
        <field name="name">mrp.change.component.wiz.form</field>
        <field name="model">mrp.change.component.wizard</field>
        <field name="arch" type="xml">
            <form string="Change Material">
                <sheet>
                    <field name="production_id" invisible="1"/>
                    <field name="production_ids" invisible="1"/>
                    <field name="hide_mo_field" invisible="1"/>
                    <field name="line_ids" context="{'default_production_id': production_id}">
                        <tree editable="bottom" trash-icon="$bom_line_id === false">
                            <field name="production_id" required="1" domain="[('id', 'in', parent.production_ids)]" attrs="{'column_invisible': [('parent.hide_mo_field', '=', True)], 'readonly': [('bom_line_id', '!=', False)]}" options="{'no_open': True, 'no_create_edit': True, 'no_create': True}" force_save="1"/>
                            <field name="move_id" invisible="1"/>
                            <field name="bom_line_id" invisible="1"/>
                            <field name="product_id" string= "Material" required="1" attrs="{'readonly': [('bom_line_id', '!=', False)]}" options="{'no_open': True, 'no_create_edit': True, 'no_create': True}" force_save="1"/>
                            <field name="product_uom_category_id" invisible="1"/>
                            <field name="operation_id" options="{'no_open': True, 'no_create_edit': True, 'no_create': True}" attrs="{'readonly': [('bom_line_id', '!=', False)]}" required="1" force_save="1"/>
                            <field name="workorder_id" invisible="1"/>
                            <field name="product_uom_qty" required="1"/>
                            <field name="product_uom" options="{'no_open': True, 'no_create_edit': True, 'no_create': True}" required="1"/>
                            <field name="alternative_component_ids" widget="many2many_tags"/>
                            <field name="bom_id" invisible="1"/>
                            <field name="allowed_operation_ids" widget="many2many_tags" invisible="1"/>
                            <field name="allowed_product_ids" widget="many2many_tags" invisible="1"/>
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button name="confirm" string="Confirm" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>