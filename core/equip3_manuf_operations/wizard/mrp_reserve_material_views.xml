<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mrp_reserve_material_form" model="ir.ui.view">
        <field name="name">view.mrp.reserve.material.form</field>
        <field name="model">mrp.reserve.material</field>
        <field name="arch" type="xml">
            <form string="Reserve Material">
                <sheet>
                    <field name="line_ids">
                        <tree string="Reserve Material" create="0" delete="0" editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="move_id" readonly="1" force_save="1" optional="hide"/>
                            <field name="warehouse_id" optional="hide"/>
                            <field name="location_id" optional="hide"/>
                            <field name="production_id" string="Production Order" invisible="context.get('active_model') == 'mrp.production'"/>
                            <field name="workorder_id"/>
                            <field name="product_id"/>
                            <field name="product_uom_qty"/>
                            <field name="reserved_uom_qty"/>
                            <field name="availability_uom_qty"/>
                            <field name="mrp_reserve_line_ids" invisible="1"/>
                            <field name="to_reserve_uom_qty" attrs="{'readonly': [('mrp_reserve_line_ids', '!=', [])]}"/>
                            <field name="product_uom"/>
                            <field name="lot_ids" widget="many2many_tags"/>
                            <field name="tracking" invisible="1"/>
                            <button name="action_show_details" type="object" string="Details" class="oe_highlight" attrs="{'invisible': [('tracking', 'not in', ('lot', 'serial'))]}"/>
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button name="action_confirm" type="object" string="Confirm" class="oe_highlight"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>