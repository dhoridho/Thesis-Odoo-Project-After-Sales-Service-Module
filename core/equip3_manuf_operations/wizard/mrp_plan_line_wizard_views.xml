<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_mrp_plan_line_wizard_form" model="ir.ui.view">
        <field name="name">view_mrp_plan_line_wizard_form</field>
        <field name="model">mrp.plan.line.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Production Order">
                <sheet>
                    <group>
                        <group>
                            <field name="line_id" invisible="1"/>
                            <field name="product_id"/>
                            <field name="bom_id"/>
                            <label for="produced_qty"/>
                            <div class="o_row">
                                <field name="produced_qty" class="oe_inline mr-2"/>
                                <field name="line_uom_id" class="oe_inline"/>
                            </div>
                        </group>
                        <group>
                            <field name="line_uom_category_id" invisible="1"/>
                            <label for="remaining_qty"/>
                            <div class="o_row">
                                <field name="remaining_qty" class="oe_inline mr-2"/>
                                <field name="line_uom_id" class="oe_inline"/>
                            </div>
                            <label for="to_produce_qty"/>
                            <div class="o_row">
                                <field name="to_produce_qty" class="oe_inline mr-2"/>
                                <field name="uom_id" class="oe_inline" domain="[('category_id', '=', line_uom_category_id)]"/>
                            </div>
                            <field name="no_of_order"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_confirm" type="object" class="oe_highlight" string="Confirm"/>
                        <button special="cancel" string="Discard"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

</odoo>