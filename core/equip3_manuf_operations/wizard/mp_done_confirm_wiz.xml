<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mp_done_confirm_wizard" model="ir.ui.view">
        <field name="name">mp.done.confirm.wizard.form</field>
        <field name="model">mp.done.confirm.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div>
                        <p>Not all work orders are finished, do you want to force done?</p>
                    </div>
                </sheet>
                <footer>
                    <button name="mark_done" string="Yes" type="object" class="oe_highlight"/>
                    <button string="No"  special="cancel"/>
                </footer>

            </form>
        </field>
    </record>
</odoo>