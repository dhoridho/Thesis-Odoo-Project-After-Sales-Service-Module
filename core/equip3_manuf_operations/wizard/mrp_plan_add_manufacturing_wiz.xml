<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="manu_order_form" model="ir.ui.view">
        <field name="name">mrp.production.wizard.form</field>
        <field name="model">mrp.production.wizard</field>
        <field name="arch" type="xml">
            <form>
                <field name="plan_id" invisible="1"/>
                <field name="is_auto_create_production_order" invisible="1"/>
                <sheet>
                    <field name="display_line_ids" widget="one2many_tree">
                        <tree editable="bottom">
                            <field name="product_id" required="1" options="{'no_create': 1, 'no_create_edit': 1}" attrs="{'readonly': [('parent_id', '>', 0)]}"/>
                            <field name="line_id" invisible="1" readonly="1" force_save="1"/>
                            <field name="parent_id" invisible="1" readonly="1" force_save="1"/>
                            <field name="level" invisible="1" readonly="1" force_save="1"/>
                            <field name="case_field" invisible="1" readonly="1" force_save="1"/>
                            <field name="bom_line_id" invisible="1" readonly="1" force_save="1"/>
                            <field name="operation_id" invisible="1" readonly="1" force_save="1"/>
                            <field name="bom_id" options="{'no_create': 1, 'no_create_edit': 1}" attrs="{'required': [('parent_id', '=', 0)]}"/>
                            <field name="product_qty" required="1"/>
                            <field name="product_uom" required="1" options="{'no_create': 1, 'no_create_edit': 1}" domain="[('category_id', '=', product_uom_category_id)]"/>
                            <field name="produce" attrs="{'invisible': [('bom_id', '=', False)]}"/>
                            <field name="no_of_mrp" required="1" attrs="{'invisible': ['|', ('bom_id', '=', False), ('produce', '=', False)], 'column_invisible': [('parent.is_auto_create_production_order', '=', False)]}"/>
                            <field name="bom_datas" invisible="1"/>
                            <field name="branch_id" invisible="1"/>
                            <field name="company" invisible="1"/>
                            <field name="product_uom_category_id" invisible="1"/>
                        </tree>
                    </field>

                    <field name="line_ids" invisible="1">
                        <tree>
                            <field name="line_id" invisible="1"/>
                            <field name="product_id"/>
                            <field name="bom_id"/>
                            <field name="product_qty"/>
                            <field name="product_uom"/>
                            <field name="produce"/>
                            <field name="no_of_mrp"/>
                            <field name="bom_line_id" optional="hide"/>
                            <field name="bom_datas" optional="hide"/>
                            <field name="branch_id" invisible="1"/>
                            <field name="company" invisible="1"/>
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button name="confirm" string="Confirm" type="object" class="oe_highlight"/>
                    <button string="Cancel"  special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>