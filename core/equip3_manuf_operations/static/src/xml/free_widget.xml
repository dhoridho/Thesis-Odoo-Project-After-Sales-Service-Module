<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="equip3_manuf_operations.freeWidget">
        <span t-if="state === 'partially_available'"><t t-esc="reserved_availability_str"/> / <t t-esc="product_uom_qty_str"/></span>
        <span t-elif="['draft', 'assigned', 'cancel', 'done'].includes(state)" t-esc="reserved_availability_str"/>
        <span t-elif="available" class="text-success">Available</span>
        <span t-else="" class="text-danger">Not Available</span>
        <button t-if="product_type == 'product'" t-att="id ? {} : {'disabled': ''}" class="o_forecast_report_button btn btn-link o_icon_button ml-2" title="Forecasted Report">
            <i t-attf-class="fa fa-fw fa-area-chart {{ state != 'draft' and !available ? 'text-danger' : '' }}"/>
        </button>
    </t>
</templates>
