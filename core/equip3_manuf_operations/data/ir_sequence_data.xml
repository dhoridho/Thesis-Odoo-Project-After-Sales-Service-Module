<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- mrp.production sequence can be taken from picking_type or ir_sequence with code 'mrp.production' -->
        <function name="write" model="ir.sequence">
            <value model="stock.picking.type" eval="obj().sudo().search([
                ('code', '=', 'mrp_operation'), 
                ('sequence_code', '=', 'MO')
            ]).sequence_id.ids"/>
            <value eval="{
                'prefix': 'POR/%(y)s/%(month)s/%(day)s/', 
                'padding': 3,
                'use_date_range': True
            }"/>
        </function>

        <function name="write" model="ir.sequence">
            <value model="ir.sequence" eval="obj().sudo().search([('code', '=', 'mrp.production')]).ids"/>
            <value eval="{
                'prefix': 'POR/%(y)s/%(month)s/%(day)s/', 
                'padding': 3,
                'use_date_range': True
            }"/>
        </function>

        <!-- mrp.unbuild -->
        <function name="write" model="ir.sequence">
            <value model="ir.sequence" eval="obj().sudo().search([('code', '=', 'mrp.unbuild')]).ids"/>
            <value eval="{
                'prefix': 'UBR/%(y)s/%(month)s/%(day)s/', 
                'padding': 3,
                'use_date_range': True
            }"/>
        </function>

        <!-- mrp.workorder -->
        <record model="ir.sequence" id="seq_mrp_workorder">
            <field name="name">Production Work Order</field>
            <field name="code">mrp.workorder</field>
            <field name="prefix">PWO/%(y)s/%(month)s/%(day)s/</field>
            <field name="padding">3</field>
            <field name="use_date_range" eval="True"/>
            <field name="company_id" eval="False"/>
        </record>

        <!-- mrp.plan -->
        <record model="ir.sequence" id="seq_mrp_plan">
            <field name="name">Production Plan</field>
            <field name="code">mrp.plan</field>
            <field name="prefix">PPN/%(y)s/%(month)s/%(day)s/</field>
            <field name="padding">3</field>
            <field name="use_date_range" eval="True"/>
            <field name="company_id" eval="False"/>
        </record>

    </data>
</odoo>