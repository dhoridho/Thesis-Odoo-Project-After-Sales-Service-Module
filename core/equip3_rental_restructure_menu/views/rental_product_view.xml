<odoo>
    <data>
        <record id="equip3_rental_product_template_form_view" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='shop']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//page[@name='pos']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//page[@name='general_information']//field[@name='type']" position="attributes">
                    <attribute name="invisible">1</attribute>
                    <attribute name="readonly">0</attribute>
                </xpath>
                <xpath expr="//page[@name='general_information']//field[@name='type']" position="after">
                    <field name="type1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
