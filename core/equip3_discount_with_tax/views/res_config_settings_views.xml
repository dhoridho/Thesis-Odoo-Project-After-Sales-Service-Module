<odoo>
    <record id="sales_discount_config_settings_form" model="ir.ui.view">
        <field name="name">sales.discount.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='pay_invoice_online_setting_container']" position="after">
                <h2>Discount Setting</h2>
                <div class="row mt16 o_settings_container" id="global_commission_settings">  
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="tax_discount_policy"/>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="tax_discount_policy" class="o_light_label" widget="radio"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="record_transactions">
                        <div class="o_setting_left_pane">
                            <field name="post_discount_account"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label string="Post Discount Account" for="post_discount_account"/>
                            <div class="text-muted">
                                Discount Account will be posted during Invoice and Bill, and Sales and Purchase Account will be not deducted by Discount Amount
                            </div>
                            <div class="content-group" attrs="{'invisible': [('post_discount_account', '=', False)]}">
                                <div class="row mt8">
                                    <label for="purchase_account_id" class="col-lg-3 o_light_label"/>
                                    <field name="purchase_account_id"/>
                                </div>
                                <div class="row mt8">
                                    <label for="sale_account_id" class="col-lg-3 o_light_label"/>
                                    <field name="sale_account_id"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>