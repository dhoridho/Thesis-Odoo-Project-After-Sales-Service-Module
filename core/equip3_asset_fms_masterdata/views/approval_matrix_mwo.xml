<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="approval_matrix_mwo_view_tree" model="ir.ui.view">
        <field name="name">approval.matrix.mwo.view.tree</field>
        <field name="model">approval.matrix.mwo</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="company_id" />
                <field name="state" />
                <field name="branch_id" />
            </tree>
        </field>
    </record>

    <record id="approval_matrix_mwo_view_form" model="ir.ui.view">
        <field name="name">approval.matrix.mwo.view.form</field>
        <field name="model">approval.matrix.mwo</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="company_id" />
                            <field name="branch_id" />
                        </group>
                        <group>
                            <field name="created_date"/>
                            <!-- <field name="create_uid"/> -->
                            <field name="user_id"/>
                            <field name="state"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Approval">
                            <field name="approval_matrix_mwo_ids" context="{'approval_matrix_mwo_ids': approval_matrix_mwo_ids}">
                                <tree editable="bottom">
                                    <field name="sequence" invisible="1"/>
                                    <field name="user_ids" string="User"  widget="many2many_tags"/>
                                    <field name="min_approvers" string="Minimum Approvers"/>
                                    <field name="approved" invisible="1"/>
                                    <field name="last_approved" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="approval_matrix_mwo_action" model="ir.actions.act_window">
        <field name="name">Maintenance Work Order Approval Matrix</field>
        <field name="res_model">approval.matrix.mwo</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p></p>
        </field>
    </record>

    <menuitem id="menu_approval_matrix" name="Approval Matrix" action="approval_matrix_mwo_action" parent="maintenance.menu_maintenance_configuration" sequence="0" />
    <menuitem id="menu_approval_matrix_mwo" name="Maintenance Work Order Approval Matrix" parent="menu_approval_matrix" action="approval_matrix_mwo_action"/>

</odoo>
