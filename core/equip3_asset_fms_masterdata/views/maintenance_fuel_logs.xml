<odoo>
    <data>

        <!-- maintenance.fuel.logs form view -->
        <record id="maintenance_fuel_logs_view_form" model="ir.ui.view">
            <field name="name">maintenance.fuel.logs.view.form</field>
            <field name="model">maintenance.fuel.logs</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                        <button string="Confirm" name="action_confirm" type="object" attrs="{'invisible':[('state', 'in', ['confirm'])]}" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="action_show_delivery_order" type="object" icon="fa-truck" attrs="{'invisible':[('delivery_order_count', '=', 0)]}">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="delivery_order_count" widget="statinfo" nolabel="1" class="mr4"/>
                                    </span>
                                    <span class="o_stat_text">Delivery Order</span>
                                </div>
                            </button>
                            <button class="oe_stat_button" name="action_show_invoice" type="object" icon="fa-pencil-square-o" attrs="{'invisible':[('invoice_count', '=', 0)]}">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="invoice_count" widget="statinfo" nolabel="1" class="mr4"/>
                                    </span>
                                    <span class="o_stat_text" attrs="{'invisible':['|',('invoice_count', '=', 0), ('create_bill_or_invoice', '=', 'bill')]}">Invoice</span>
                                    <span class="o_stat_text" attrs="{'invisible':['|',('invoice_count', '=', 0), ('create_bill_or_invoice', '=', 'invoice')]}">Bill</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group name="grup1">
                            <group>
                                <field name="vehicle" context="{'fuel_logs': True, 'fuel_logs_id': active_id}" domain="[('vehicle_checkbox', '=', True)]" attrs="{'readonly':[('state', '=', 'confirm')]}"/>
                                <field name="date" attrs="{'readonly':[('state', '=', 'confirm')]}"/>
                                <field name="refueling_schema" widget="radio" attrs="{'readonly':[('state', '=', 'confirm')], 'invisible':[('not_fueling', '=', True)]}" required="1"/>
                                <field name="not_fueling" force_save="1" readonly="1" invisible="1"/>
                                <field name="create_bill_or_invoice" widget="radio" attrs="{'invisible':[('refueling_schema', '!=', 'gas_station')],'readonly':[('state', '!=', 'draft')]}"/>
                                <field name="location_id" attrs="{'readonly':[('state', '=', 'confirm')], 'invisible':[('refueling_schema', '=', 'gas_station')], 'required':[('refueling_schema', '=', 'fuel_stock')]}"/>
                                <field name="location_dest_id" attrs="{'invisible':[('refueling_schema', '=', 'gas_station')], 'required':[('refueling_schema', '=', 'fuel_stock')]}" readonly="1"/>
                            </group>
                            <group>
                                <field name="create_date" string="Created On" attrs="{'readonly':[('state', '=', 'confirm')]}"/>
                                <field name="create_uid" attrs="{'readonly':[('state', '=', 'confirm')]}"/>
                                <field name="analytic_group" widget="many2many_tags" attrs="{'readonly':[('state', '=', 'confirm')]}"/>
                            </group>
                        </group>
                        <group string="Refueling Details" name="grup2">
                            <group>
                                <field name="fuel_type" attrs="{'readonly':[('state', '=', 'confirm')]}" required="1"/>
                                <field name="liter" attrs="{'readonly':[('state', '=', 'confirm')]}"/>
                                <field name="total_price"/>
                                <field name="current_fuel" attrs="{'readonly':[('state', '=', 'confirm')]}"/>
                            </group>
                            <group>
                                <group string="Flow Meter" name="flow_meter">
                                    <field name="before_refill"/>
                                    <field name="after_refill"/>
                                </group>
                                <group string="Value Meter" name="value_meter">
                                    <field name="odometer"/>
                                    <field name="hour_meter"/>
                                </group>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="maintenance_fuel_logs_view_tree" model="ir.ui.view">
            <field name="name">maintenance.fuel.logs.tree</field>
            <field name="model">maintenance.fuel.logs</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Fuel Logs"/>
                    <field name="vehicle" />
                    <field name="date" />
                    <field name="fuel_type" />
                    <field name="fuel_usage"/>
                    <field name="current_fuel" />
                    <field name="liter" />
                    <field name="total_price" />
                </tree>
            </field>
        </record>

        <!-- maintenance.fuel.logs search view -->
        <record id="maintenance_fuel_logs_view_search" model="ir.ui.view">
            <field name="name">maintenance.fuel.logs.view.search</field>
            <field name="model">maintenance.fuel.logs</field>
            <field name="arch" type="xml">
                <search string="Search Description">
                    <filter name="group_vehicle" string="Vehicle" icon="terp-partner" context="{'group_by':'vehicle'}"/>
                </search>
            </field>
        </record>

        <!-- maintenance.fuel.logs action window -->
        <record id="maintenance_fuel_logs_action" model="ir.actions.act_window">
            <field name="name">Fuel Logs</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">maintenance.fuel.logs</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_group_vehicle': 1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>

        <menuitem id="menu_maintenance_fuel_logs_configuration" name="Fuel Logs" parent="maintenance.menu_equipment_form" action="maintenance_fuel_logs_action" sequence="4" />

    </data>
</odoo>
