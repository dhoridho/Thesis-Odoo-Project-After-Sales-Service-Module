<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_maintenance_equipment_asset_barcode">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure">
                            <div class="row">
                                <center>
                                    <table class="table table-bordered mb-2" style="border: 2px solid black;">
                                        <tr>
                                            <th class="table-active text-left" style="height: 4rem;">
                                                <strong t-field="o.name"/><br/>
                                                <span t-field="o.serial_no"/>
                                            </th>
                                        </tr>
                                        <tr>
                                            <td class="text-center align-middle" style="height: 6rem;">
                                                <img alt="Barcode" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', o.barcode, 800, 600)" style="width:300px; height:100px;"/>
                                            </td>
                                        </tr>
                                    </table>
                                </center>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
