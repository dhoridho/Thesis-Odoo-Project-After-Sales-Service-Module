<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="odometer_m_plan_action_asset_form" model="ir.actions.act_window">
        <field name="name">Odometer Maintenance Plan</field>
        <field name="res_model">maintenance.plan</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="maintenance_plan.maintenance_plan_view_tree"/>
        <field name="domain">[('is_odometer_m_plan', '=', True), ('equipment_id', '=', active_id)]</field>
        <field name="context">{'default_is_odometer_m_plan': True, 'default_equipment_id': active_id}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new Asset
            </p>
        </field>
    </record>
    <record id="hourmeter_m_plan_action_asset_form" model="ir.actions.act_window">
        <field name="name">Hourmeter Maintenance Plan</field>
        <field name="res_model">maintenance.plan</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="maintenance_plan.maintenance_plan_view_tree"/>
        <field name="domain">[('is_hourmeter_m_plan', '=', True), ('equipment_id', '=', active_id)]</field>
        <field name="context">{'default_is_hourmeter_m_plan': True, 'default_equipment_id': active_id}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new Asset
            </p>
        </field>
    </record>
    <record id="preventive_m_plan_action_asset_form" model="ir.actions.act_window">
        <field name="name">Preventive Maintenance Plan</field>
        <field name="res_model">maintenance.plan</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="maintenance_plan.maintenance_plan_view_tree"/>
        <field name="domain">[('is_preventive_m_plan', '=', True), ('equipment_id', '=', active_id)]</field>
        <field name="context">{'default_is_preventive_m_plan': True, 'default_equipment_id': active_id}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new Asset
            </p>
        </field>
    </record>

    <record id="hr_equipment_view_form_extended" model="ir.ui.view">
        <field name="name">maintenance.equipment.form.view.extended</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="maintenance_plan.hr_equipment_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='%(maintenance_plan.maintenance_plan_equipment_action)d']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='%(maintenance_plan.maintenance_plan_equipment_action)d']" position="after">
                <button type="object" name="action_view_odometer_mp" class="oe_stat_button" icon="fa-list" attrs="{'invisible': [('vehicle_checkbox','=', False)]}">
                    <field name="vehicle_checkbox" invisible="1"/>
                    <field name="odometer_mp_ids" invisible="1"/>
                    <field name="odometer_mp_count" widget="statinfo" string="Odometer Plans"/>
                </button>
                <button type="object" name="action_account_asset" string="Asset Depreciation" class="oe_stat_button" icon="fa-list"></button>
                <button type="object" name="action_view_hourmeter_mp" class="oe_stat_button" icon="fa-list">
                    <field name="hourmeter_mp_ids" invisible="1"/>
                    <field name="hourmeter_mp_count" widget="statinfo" string="Hourmeter Plans"/>
                </button>
                <button type="object" name="action_view_preventive_mp" class="oe_stat_button" icon="fa-list">
                    <field name="preventive_mp_ids" invisible="1"/>
                    <field name="preventive_mp_count" widget="statinfo" string="Preventive Plans"/>
                </button>
            </xpath>
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="asset_prefix" attrs="{'invisible' : [
                        '|', 
                        ('is_generate_product', '=', False),
                        '&amp;', ('is_generate_product', '=', True), 
                        ('category_prefix_preference', '=', 'all')], 
                        'required': [('is_generate_product', '=', True), 
                        ('category_prefix_preference', '=', 'additional')]}"/>
                <field name="is_generate_product" invisible="1"/>
                <field name="category_prefix_preference" invisible="1"/>
            </xpath>

        </field>
    </record>
</odoo>