        <record id="hr_equipment_view_form_inherit_custom_image_inherit" model="ir.ui.view">
            <field name="name">maintenance.equipment.inherit.view.form</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="equipment_print_pdf_image.hr_equipment_view_form_inherit_custom_image"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='equipmt_image1_custom']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//div[2]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>