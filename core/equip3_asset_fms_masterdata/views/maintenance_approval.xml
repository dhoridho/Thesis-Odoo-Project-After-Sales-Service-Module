<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- maintenance.approval tree view -->
    <record id="maintenance_approval_wo_view_tree" model="ir.ui.view">
        <field name="name">maintenance.approval.wo.view.tree</field>
        <field name="model">maintenance.approval.wo</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="company_id" />    
                <field name="branch_id" />
                <field name="createby" />
            </tree>
        </field>
    </record>
    <!-- maintenance.approval tree view -->
    <record id="maintenance_approval_ro_view_tree" model="ir.ui.view">
        <field name="name">maintenance.approval.ro.view.tree</field>
        <field name="model">maintenance.approval.ro</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="company_id" />    
                <field name="branch_id" />
                <field name="createon" />
                <field name="createby"/>
            </tree>
        </field>
    </record>
    <!-- maintenance.approval form view -->
    <record id="maintenance_approval_wo_view_form" model="ir.ui.view">
        <field name="name">maintenance.approval.wo.view.form</field>
        <field name="model">maintenance.approval.wo</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                <group>
                    <group>
                        <field name="name" />
                        <field name="company_id" />    
                        <field name="branch_id" />
                    </group>
                    <group>
                        <field name="createon" />
                        <field name="createby" force_save="1" readonly="1"/>
                    </group>
                </group>
                <notebook>
						<page string="Approval Line">
							<field name="approval_ids" context="{'approval_ids': approval_ids}">
								<tree string="Approval Line" editable="bottom">
                                        <field name="no_wo_sequence" force_save="1" readonly="1"/>
                                        <field name="userwo_line_id" />
                                        <field name="approval_wo_id" /> 
                                        <field name="minimum_wo" />
								</tree>
							</field>
						</page>
				</notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- maintenance.approval form view -->
    <record id="maintenance_approval_ro_view_form" model="ir.ui.view">
        <field name="name">maintenance.approval.ro.view.form</field>
        <field name="model">maintenance.approval.ro</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                <group>
                    <group>
                        <field name="name" />
                        <field name="company_id" />    
                        <field name="branch_id" />
                    </group>
                    <group>
                        <field name="createon" />
                        <field name="createby" force_save="1" readonly="1"/>
                    </group>
                </group>
                <notebook>
						<page string="Approval Line">
							<field name="approval_ids" context="{'approval_ids': approval_ids}">
								<tree string="Approval Line" editable="bottom">
                                        <field name="no_ro_sequence" force_save="1" readonly="1"/>
                                        <field name="userro_line_id" />
                                        <field name="approval_ro_id" /> 
                                        <field name="minimum_ro" />
								</tree>
							</field>
						</page>
				</notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- maintenance.approval action window -->
    <record id="maintenance_approval_wo_action" model="ir.actions.act_window">
        <field name="name">Maintenance Approval WO Matrix</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">maintenance.approval.wo</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
            </p><p>
                <!-- More details about what a user can do with this object will be OK --> 
            </p>
        </field>
    </record>
    <!-- maintenance.approval action window -->
    <record id="maintenance_approval_ro_action" model="ir.actions.act_window">
        <field name="name">Maintenance Approval RO Matrix</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">maintenance.approval.ro</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
            </p><p>
                <!-- More details about what a user can do with this object will be OK --> 
            </p>
        </field>
    </record>
    <menuitem
        id="approval_matrix_menu"
        name="Approving Matrix"
        action="maintenance_approval_wo_action"
        parent="maintenance.menu_maintenance_configuration"
        sequence="2"/>
    <menuitem
        id="mwo_approval_matrix_menu"
        name="Maintenance Approval WO Matrix"
        action="maintenance_approval_wo_action"
        parent="approval_matrix_menu"
        sequence="1"/>
    <menuitem
        id="mro_approval_matrix_menu"
        name="Maintenance Approval RO matrix"
        action="maintenance_approval_ro_action"
        parent="approval_matrix_menu"
        sequence="2"/>
    
</odoo>