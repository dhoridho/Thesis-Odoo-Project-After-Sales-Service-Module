<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- maintenance.type tree view -->
        <record id="maintenance_type_view_tree" model="ir.ui.view">
            <field name="name">maintenance.type.view.tree</field>
            <field name="model">maintenance.type</field>
            <field name="arch" type="xml">
                <tree string="Maintenance Type" editable="top">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <!-- maintenance.type action window -->
        <record id="maintenance_type_action" model="ir.actions.act_window">
            <field name="name">Maintenance Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">maintenance.type</field>
            <field name="view_mode">tree</field>
            <field name="context"></field>
        </record>
        <menuitem id="maintenance_type_menu" name="Maintenance Type" action="maintenance_type_action" parent="maintenance.menu_equipment_form" sequence="8"/>
    </data>
</odoo>