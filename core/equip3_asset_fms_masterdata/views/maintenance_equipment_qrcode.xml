<odoo>
    <template id="report_maintenance_equipment_qrcode_new">
        <t t-call="web.basic_layout">
            <div class="page" align="center">
                <style type="text/css">
                    .qrcode-container {
                        display: inline-block;
                        text-align: center;
                        border: 1px solid #ccc;
                        padding: 10px;
                        margin: 10px;
                        border-radius: 5px;
                    }

                    .asset-name, .serial-number {
                        font-size: 7px;
                        margin-bottom: 5px;
                    }

                    .qr-code, .asset_value {
                        margin-top: 10px;
                    }
                </style>
                <t t-as="o" t-foreach="docs">
                    <t t-set="config" t-value="request.env['asset.qrcode.config'].browse(1)"/>
                    <div class="qrcode-container">
                        <!-- asset name -->
                        <div t-if="config.asset_name" class="asset-name" t-attf-style="font-size:{{config.asset_name_size or '7'}}px">
                            <span t-field="o.name"/>
                        </div>

                        <!-- serial number -->
                        <div t-if="config.serial_no" class="serial-number" t-attf-style="font-size:{{config.serial_no_size or '7'}}px">
                            <span t-field="o.serial_no"/>
                        </div>

                        <!-- qr code -->
                        <div class="qr-code">
                            <img t-att-src="image_data_uri(o.qr_code)" class="img-responsive" t-att-style="'width: %spx; height: %spx;' % (config.qrcode_width, config.qrcode_height)"/>
                        </div>

                        <!-- asset value -->
                        <div class="asset-value" t-attf-style="font-size:{{config.asset_value_size or '7'}}px">
                            <span t-esc="'{:,.2f}'.format(round(o.asset_value, 0))"/>
                        </div>
                        
                    </div>
                </t>
            </div>
        </t>
    </template>
</odoo>
