<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- asset.qrcode.config form view -->
        <record id="asset_qrcode_config_view_form" model="ir.ui.view">
            <field name="name">asset.qrcode.config.view.form</field>
            <field name="model">asset.qrcode.config</field>
            <field name="arch" type="xml">
                <form string="Asset QR Code Configuration" class="oe_form_configuration">
                    <header>
                        <button string="Apply" type="object" name="apply" class="oe_highlight" />
                    </header>
                    <sheet>
                        <group>
                            <group string="Dimensions">
                                <field name="page_width" />
                                <field name="page_height" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Attributes To Print">
                                <group>
                                    <group string="Display Fields Configuration">
                                        <field name="asset_name" />
                                        <field name="asset_value" />
                                        <field name="serial_no" />
                                    </group>
                                    <group string="Font Size Configuration">
                                        <field name="asset_name_size" />
                                        <field name="asset_value_size" />
                                        <field name="serial_no_size" />

                                    </group>
                                    <group string="QR Code Configuration">
                                        <field name="qrcode_width"/>
                                        <field name="qrcode_height"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Margins">
                                <group>
                                    <group>
                                        <field name="margin_top" />
                                        <field name="margin_bottom" />
                                        <field name="dpi" />
                                    </group>
                                    <group>
                                        <field name="margin_left" />
                                        <field name="margin_right" />
                                        <field name="header_spacing" invisible="1" />
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- asset.qrcode.config action window -->
        <record id="asset_qrcode_config_action" model="ir.actions.act_window">
            <field name="name">asset.qrcode.config.action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">asset.qrcode.config</field>
            <field name="view_mode">form</field>
            <field name="res_id" ref="equip3_asset_fms_masterdata.asset_qrcode_configuration" />
            <field name="target">inline</field>
        </record>

        <menuitem
            id="menu_asset_qrcode_config"
            name="QR Config"
            parent="maintenance.menu_maintenance_configuration"
            action="asset_qrcode_config_action"
            sequence="5"
        />

    </data>
</odoo>