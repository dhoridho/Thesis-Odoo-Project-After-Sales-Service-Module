<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_inherit_for_trace" model="ir.ui.view">
        <field name="name">res.confing.settings.view.form.inherit.new</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='maintenance']" position="inside">
            <h2>Asset Prefix</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="prefix_limit_products">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="prefix_limit"/>
                            <field name="prefix_limit" style="width: 10% !important; "/>
                            <div class="text-muted">
                                Prefix character limit for auto generate product code and lot/serial number
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>



