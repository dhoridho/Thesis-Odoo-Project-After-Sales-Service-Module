<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="report_all_asset_qrcode_new">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="page">
                    <div class="oe_structure">
                        <div style="position:relative;">
                            <t t-foreach="o.assets_ids" t-as="asset">
                                <div style="position:relative;">
                                    <span t-field="asset.name"/>
                                    <br/>
                                    <span t-field="asset.serial_no"/>
                                    <br/>
                                    <span>
                                        <img t-att-src="image_data_uri(asset.qr_code)" class="img-responsive"
                                             style="width:2.38in; height:2.38in;"/>
                                    </span>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <record id="report_all_asset_qrcode" model="ir.actions.report">
        <field name="name">All Asset QR Code (PDF)</field>
        <field name="model">maintenance.facilities.area</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">equip3_asset_fms_masterdata.report_all_asset_qrcode_new</field>
        <field name="report_file">equip3_asset_fms_masterdata.report_all_asset_qrcode_new</field>
        <field name="print_report_name">'All Asset QR Code - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_maintenance_facilities_area"/>
        <field name="binding_type">action</field>
    </record>
</odoo>