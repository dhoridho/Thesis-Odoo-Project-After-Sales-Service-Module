<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="approval_matrix_mp_view_tree" model="ir.ui.view">
        <field name="name">approval.matrix.mp.view.tree</field>
        <field name="model">approval.matrix.mp</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="company_id" />
                <field name="branch_id" />
            </tree>
        </field>
    </record>

    <record id="approval_matrix_mp_view_form" model="ir.ui.view">
        <field name="name">approval.matrix.mp.view.form</field>
        <field name="model">approval.matrix.mp</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="company_id" />
                            <field name="branch_id" />
                        </group>
                        <group>
                            <field name="create_date"/>
                            <field name="create_uid"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Approval Line">
                            <field name="approval_matrix_mp_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="user_ids" string="User"  widget="many2many_tags"/>
                                    <field name="min_approvers" string="Minimum Approvers"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="approval_matrix_mp_action" model="ir.actions.act_window">
        <field name="name">Maintenance Plan Approval Matrix</field>
        <field name="res_model">approval.matrix.mp</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p></p>
        </field>
    </record>

    <menuitem id="menu_approval_matrix_mp" name="Maintenance Plan Approval Matrix" parent="menu_approval_matrix" action="approval_matrix_mp_action" sequence="10"/>

</odoo>
