<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="approval_matrix_asset_transfer_view_tree" model="ir.ui.view">
        <field name="name">approval.matrix.asset.transfer.view.tree</field>
        <field name="model">approval.matrix.asset.transfer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="company_id" />
                <field name="branch_id" />
                <field name="fac_area" />
                <field name="min_amount" />
                <field name="max_amount" />
            </tree>
        </field>
    </record>

    <record id="approval_matrix_asset_transfer_view_form" model="ir.ui.view">
        <field name="name">approval.matrix.asset.transfer.view.form</field>
        <field name="model">approval.matrix.asset.transfer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="company_id" />
                            <field name="branch_id" />
                        </group>
                        <group>
                            <field name="fac_area" />
                            <field name="created_date"/>
                            <field name="user_id"/>
                            <field name="min_amount"/>
                            <field name="max_amount"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Approval">
                            <field name="approval_matrix_asset_transfer_ids">
                                <tree editable="bottom">
                                    <field name="state_id" string="Status"/>
                                    <field name="user_id" string="User" widget="many2many_tags"/>
                                    <field name="min_approvers" string="Minimum Approvers"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="approval_matrix_asset_transfer_action" model="ir.actions.act_window">
        <field name="name">Internal Asset Transfer Approval Matrix</field>
        <field name="res_model">approval.matrix.asset.transfer</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p></p>
        </field>
    </record>

    <menuitem id="menu_approval_matrix_asset_transfer" name="Internal Asset Transfer Approval Matrix" parent="menu_approval_matrix" action="approval_matrix_asset_transfer_action" sequence="11"/>

</odoo>
