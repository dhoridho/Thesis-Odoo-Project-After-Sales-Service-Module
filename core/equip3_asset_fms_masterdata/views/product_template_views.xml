<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_template_only_form_asset_view" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Asset Parts" name="asset_parts" attrs="{'invisible':[('type', '!=', 'asset')]}">
                    <group name="asset_parts_group" string="Asset Parts">
                        <field name="asset_parts_line" nolabel="1">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="qty"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
        </record>

        <record id="asset_fms_masterdata_product_template" model="ir.ui.view">
            <field name="name">asset.fms.masterdata.product.template</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="equip3_inventory_masterdata.view_product_template_tab_form_new"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_information_new']//group[@name='group_general']/field[@name='asset_category_id']" position="after">
                    <field name="asset_control_category" attrs="{'required': [('type', '=', 'asset')], 'invisible':[('type', '!=', 'asset')]}"/>
                </xpath>
            </field>
        </record>

        <!-- product.template inherit form view -->
        <record id="view_template_property_form_fms_masterdata" model="ir.ui.view">
            <field name="name">product.template.inherit.view.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.view_template_property_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='traceability']" position="attributes">
                    <attribute name="attrs">{'invisible': [('type', 'in', ['consu','asset'])]}</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>