<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- oform STATUS BAR 'PLAN'  -->
        <record id="plan_action_link2_preventive_team" model="ir.actions.act_window">
            <field name="name">Preventive Maintenance Plan</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">maintenance.plan</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('maintenance_team_id','=',active_id),('is_preventive_m_plan', '=', True)]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add a new preventive maintenance plan
                </p>
                <p>
                    Follow the process of the request and communicate with the collaborator.
                </p>
            </field>
        </record>

