     <template id="maintenance_facilities_area_barcode_report">
        <t t-call="web.basic_layout">
            <div class="page">
                <t t-as="o" t-foreach="docs">
                    <div style="display: inline-table; height: 15rem;">
                        <table class="table table-bordered m-0 p-0">
                            <tr>
                                <td class="text-center align-middle" style="height: 15rem; padding:0; margin:0;">
                                    <span t-field="o.name"/>
                                    <br/>
                                    <img t-att-src="image_data_uri(o.qrcode)" class="img-responsive" style="width:3in; height:3in;"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </t>
            </div>
        </t>
    </template>

    <record id="report_maintenance_facilities_area_barcode" model="ir.actions.report">
        <field name="name">Area QR Code(PDF)</field>
        <field name="model">maintenance.facilities.area</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">equip3_asset_fms_masterdata.maintenance_facilities_area_barcode_report</field>
        <field name="report_file">equip3_asset_fms_masterdata.maintenance_facilities_area_barcode_report</field>
        <field name="print_report_name">'Maintenance Facilities Area QRcode - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_maintenance_facilities_area"/>
        <field name="binding_type">action</field>
    </record>
</odoo>