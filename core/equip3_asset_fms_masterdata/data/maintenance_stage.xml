<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data noupdate="1">

    <!-- Standard stages for Maintenance Request -->

    <!--
         delete unused basic stages at the first installation
         make sure this function is on top position & called before the new stages are created
         warning!, do not set noupdate to "False" / "0" or the stages will be deleted at every update
    -->
    <function name="delete_unused_stage" model="maintenance.stage"/>

    <record id="fms_new_request" model="maintenance.stage">
        <field name="name">New Request</field>
        <field name="sequence" eval="1" />
        <field name="fold" eval="False" />
    </record>
    <record id="fms_waiting_for_approval" model="maintenance.stage">
        <field name="name">Waiting for Approval</field>
        <field name="sequence" eval="2" />
        <field name="fold" eval="False" />
    </record>
    <record id="fm_approved" model="maintenance.stage">
        <field name="name">Approved</field> 
        <field name="sequence" eval="3" />
        <field name="fold" eval="False" />
    </record>
    <record id="fms_in_progress" model="maintenance.stage">
        <field name="name">In Progress</field>
        <field name="sequence" eval="4" />
        <field name="fold" eval="False" />
    </record>
    <record id="fms_done" model="maintenance.stage">
        <field name="name">Done</field>
        <field name="sequence" eval="5" />
        <field name="fold" eval="False" />
        <field name="done" eval="True" />
    </record>
    <record id="fms_rejected" model="maintenance.stage">
        <field name="name">Rejected</field>
        <field name="sequence" eval="6" />
        <field name="fold" eval="True" />
        <field name="done" eval="True" />
    </record>
       <record id="fms_canceled" model="maintenance.stage">
        <field name="name">Cancelled</field>
        <field name="sequence" eval="7" />
        <field name="fold" eval="True" />
        <field name="done" eval="True" />
    </record>

</data>
</odoo>
