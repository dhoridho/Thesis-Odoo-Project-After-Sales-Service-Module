<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_property_inherit_view_form" model="ir.ui.view">
            <field name="name">product.property.form.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="property_rental_mgt_app.product_normal_form_view_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_view_maintenance']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" name="action_mrq_link" type="object" icon="fa-gears" attrs="{'invisible':[ ('mrq_count', '=', 0)]}">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="mrq_count" widget="statinfo" nolabel="1" class="mr4"/>
                            </span>
                            <span class="o_stat_text">Maintenance Request</span>
                        </div>
                    </button>
                    <button class="oe_stat_button" name="action_mwo_link" type="object" icon="fa-wrench" attrs="{'invisible':[ ('mwo_count', '=', 0)]}">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="mwo_count" widget="statinfo" nolabel="1" class="mr4"/>
                            </span>
                            <span class="o_stat_text">Maintenance Work Order</span>
                        </div>
                    </button>
                    <button class="oe_stat_button" name="action_mro_link" type="object" icon="fa-wrench" attrs="{'invisible':[ ('mro_count', '=', 0)]}">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="mro_count" widget="statinfo" nolabel="1" class="mr4"/>
                            </span>
                            <span class="o_stat_text">Maintenance Repair Order</span>
                        </div>
                    </button>
                    <button class="oe_stat_button" name="action_preventive_link" type="object" icon="fa-list" attrs="{'invisible':[ ('mpreventive_count', '=', 0)]}">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="mpreventive_count" widget="statinfo" nolabel="1" class="mr4"/>
                            </span>
                            <span class="o_stat_text">Preventive Maintenance Plans</span>
                        </div>
                    </button>
                    <button class="oe_stat_button" name="action_hourmeter_link" type="object" icon="fa-list" attrs="{'invisible':[ ('mhourmeter_count', '=', 0)]}">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="mhourmeter_count" widget="statinfo" nolabel="1" class="mr4"/>
                            </span>
                            <span class="o_stat_text">Hour Meter Maintenance Plans</span>
                        </div>
                    </button>
                    <button class="oe_stat_button" name="action_odometer_link" type="object" icon="fa-list" attrs="{'invisible':[ ('modometr_count', '=', 0)]}">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="modometr_count" widget="statinfo" nolabel="1" class="mr4"/>
                            </span>
                            <span class="o_stat_text">Odometer Maintenance Plans</span>
                        </div>
                    </button>
                </div>
            </field>
        </record>
    </data>
</odoo>
