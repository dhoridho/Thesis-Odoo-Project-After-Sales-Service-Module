<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="maintenance_request_view_form_inherit_property" model="ir.ui.view">
            <field name="name">maintenance.request.view.form.inherit.property</field>
            <field name="model">maintenance.request</field>
            <field name="inherit_id" ref="equip3_asset_fms_operation.maintenance_request_view_form_inherit_hr"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='create_uid']" position="after">
                    <field name="property_id"/>
                </xpath>
                <button name="create_work_order" position="replace">
                    <button string="Create Work Order" name="create_work_order_wizard" type="object" class="oe_highlight" attrs="{'invisible': [('is_create_work_order', '=', False)]}"/>
                </button>
            </field>
        </record>
        
        <record id="maintenance_wo_inherit_form_property" model="ir.ui.view">
            <field name="name">maintenance_wo_inherit.form.property</field>
            <field name="model">maintenance.work.order</field>
            <field name="inherit_id" ref="equip3_asset_fms_operation.maintenance_work_order_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='created_date']" position="before">
                    <field name="property_id"/>
                </xpath>
            </field>
        </record>

        <record id="maintenance_ro_inherit_form_property" model="ir.ui.view">
            <field name="name">maintenance_ro_inherit.form.property</field>
            <field name="model">maintenance.repair.order</field>
            <field name="inherit_id" ref="equip3_asset_fms_operation.maintenance_repair_order_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='created_date']" position="before">
                    <field name="property_id"/>
                </xpath>
            </field>
        </record>

        <record id="maintenance_plan_view_form_inherited" model="ir.ui.view">
            <field name="name">maintenance.plan.view.form.inherited</field>
            <field name="model">maintenance.plan</field>
            <field name="inherit_id" ref="equip3_asset_fms_operation.maintenance_plan_view_form_inherited"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='created_on']" position="before">
                    <field name="property_id"/>
                </xpath>
            </field>
        </record>
    
    </data>
    

</odoo>
