<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="0">
    <record id="izi_tiktok.form_mp_account" model="ir.ui.view">
      <field name="name">Marketplace Account Form View</field>
      <field name="model">mp.account</field>
      <field name="inherit_id" ref="izi_marketplace.form_mp_account"/>
      <field name="arch" type="xml">
        <xpath expr="header" position="inside">
          <button name="tiktok_refresh_token" string="Refresh Token" class="oe_highlight" type="object" attrs="{'invisible': [('marketplace', '!=', 'tiktok')]}"/>
        </xpath>
        <xpath expr="//div[@name='button_box']" position="inside">
          <img alt="Tiktok Shop" attrs="{'invisible': [('marketplace', '!=', 'tiktok')]}" class="mp-account-img" src="/izi_tiktok/static/src/img/tts.png"/>
        </xpath>
        <xpath expr="//group[@name='mp_credential']" position="inside">
          <group attrs="{'invisible': [('marketplace', '!=', 'tiktok')]}">
            <field name="tts_app_key" attrs="{'required': [('marketplace', '=', 'tiktok')]}"/>
            <field name="tts_app_secret" password="True" attrs="{'required': [('marketplace', '=', 'tiktok')]}"/>
            <field name="tts_shop_id" attrs="{'invisible': [('tts_shop_id', '=', False)]}"/>
            <field name="tts_access_token"/>
            <field name="tts_refresh_token"/>
          </group>
        </xpath>
        <xpath expr="//group[@name='sales_configuration']" position="inside">
          <field name="tts_state_order_ids" widget="many2many_tags"/>
        </xpath>
        <xpath expr="//group[@name='product_configuration']" position="attributes">
          <attribute name="attrs">{'invisible': [('marketplace', '=', 'tiktok')]}</attribute>
        </xpath>
        <xpath expr="//group[@name='product_configuration']" position="after">
          <group name="tiktok_product_configuration" string='Tiktok Order Product Component' attrs="{'invisible': [('marketplace', '!=', 'tiktok')]}">
            <field name="tts_seller_discount_product_id"/>
            <field name="tts_platform_discount_product_id"/>
            <field name="tts_shipping_fee_seller_discount_product_id"/>
            <field name="tts_shipping_fee_platform_discount_product_id"/>
          </group>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
