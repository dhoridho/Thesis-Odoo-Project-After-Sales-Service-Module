<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="izi_tiktok.view_picking_form" model="ir.ui.view">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="izi_marketplace.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='mp_actions']" position="inside">
                    <div style="margin: 10px" attrs="{'invisible': [('marketplace', '!=', 'tiktok')]}">
                        <button name="tiktok_print_label" string="Get Shipping Document" class="btn-info" type="object" attrs="{'invisible': [('mp_order_status', 'not in', ['to_ship','in_ship'])]}" icon="fa-times-circle" style="margin-right: 5px;"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
