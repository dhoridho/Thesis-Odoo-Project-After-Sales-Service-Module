<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="izi_tiktok.form_wiz_tiktok_order_reject" model="ir.ui.view">
            <field name="name">Wizard tiktok Order Reject Form View</field>
            <field name="model">wiz.tiktok.order.reject</field>
            <field name="arch" type="xml">
                <form string="Wizard Tiktok Order Reject">
                    <sheet>
                        <group>
                            <field name="mp_order_id" readonly="1"/>
                            <field name="order_status" readonly="1"/>
                            <field name="order_reason" required="1"/>
                        </group>
                        <footer>
                            <button name="confirm" type="object" string="Confirm" class="btn-primary" confirm="Are you sure to reject these orders?"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
