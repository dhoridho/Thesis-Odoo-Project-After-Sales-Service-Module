<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_employee_document_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.employee.document.view.form.</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="70"/>
            <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='hr']/div[@name='work_organization_setting_container']" position="after">
                    <h2>Employee Documents</h2>
                    <div class="row mt16 o_settings_container" name="employee_documents_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="employee_documents_control_setting">
                            <div class="o_setting_left_pane" style="width: 75px; vertical-align: middle;" >
                                <span class="o_form_label" style="display: block; margin-top: 40px;">File Type</span>
                            </div>
                            <div class="o_setting_right_pane" style="margin-left: 85px; border-left: none;">
                                <div class="content-group" name="file_type_options">
                                    <div class="row">
                                        <div class="col-4">
                                            <field name="doc_pdf" class="col-lg-1 ml16"/>
                                            <label for="doc_pdf" class="o_light_label" style="margin-left: 15px;"/>
                                        </div>
                                        <div class="col-4">
                                            <field name="doc_xls" class="col-lg-1 ml16"/>
                                            <label for="doc_xls" class="o_light_label" style="margin-left: 15px;"/>
                                        </div>
                                        <div class="col-4">
                                            <field name="doc_rar" class="col-lg-1 ml16"/>
                                            <label for="doc_rar" class="o_light_label" style="margin-left: 15px;"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4">
                                            <field name="doc_doc" class="col-lg-1 ml16"/>
                                            <label for="doc_doc" class="o_light_label" style="margin-left: 15px;"/>
                                        </div>
                                        <div class="col-4">
                                            <field name="doc_xlsx" class="col-lg-1 ml16"/>
                                            <label for="doc_xlsx" class="o_light_label" style="margin-left: 15px;"/>
                                        </div>
                                        <div class="col-4">
                                            <field name="doc_zip" class="col-lg-1 ml16"/>
                                            <label for="doc_zip" class="o_light_label" style="margin-left: 15px;"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4">
                                            <field name="doc_docx" class="col-lg-1 ml16"/>
                                            <label for="doc_docx" class="o_light_label" style="margin-left: 15px;"/>
                                        </div>
                                        <div class="col-4">
                                            <field name="doc_jpg" class="col-lg-1 ml16"/>
                                            <label for="doc_jpg" class="o_light_label" style="margin-left: 15px;"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4">
                                            <field name="doc_mp4" class="col-lg-1 ml16"/>
                                            <label for="doc_mp4" class="o_light_label" style="margin-left: 15px;"/>
                                        </div>
                                        <div class="col-4">
                                            <field name="doc_png" class="col-lg-1 ml16"/>
                                            <label for="doc_png" class="o_light_label" style="margin-left: 15px;"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container" name="employee_documents_size_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="employee_documents_size_control_setting">
                            <div class="content-group">
                                <div class="mt16">
                                    <label for="file_size" string="Maximum File Size"/>
                                    <field style="margin-left:10px;" name="file_size" class="oe_inline col-lg-2"/> MB
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>