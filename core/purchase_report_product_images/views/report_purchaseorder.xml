<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_purchase_document_inherit" inherit_id="purchase_multi_discounts.report_purchaseorder_document">
        <xpath expr="//thead/tr/th[1]" position="before">
            <th>
                #
            </th>
            <t t-if="o.print_image and o.image_sizes in ('image_128', 'image_256', 'image_512') ">
                <th>
                    Product Image
                </th>
            </t>
        </xpath>
        <xpath expr="//tbody//tr//td[1]" position="before">
            <td>
                <span t-esc="line_index + 1"/>.
            </td>
            <t t-if="o.image_sizes == 'image_128' and o.print_image ">
                <td>
                    <span t-field="line.product_id.image_128"
                        t-options="{'widget': 'image', 'class': 'img-rounded'}"/>
                </td>
            </t>
            <t t-if="o.image_sizes == 'image_256' and o.print_image">
                <td>
                    <span t-field="line.product_id.image_256"
                        t-options="{'widget': 'image', 'class': 'img-rounded'}"/>
                </td>
            </t>
            <t t-if="o.image_sizes == 'image_512' and o.print_image ">
                <td>
                    <span t-field="line.product_id.image_512"
                        t-options="{'widget': 'image', 'class': 'img-rounded'}"/>
                </td>
            </t>
        </xpath>
    </template>

    <template id="report_purchasequotation_document_inherit" inherit_id="purchase.report_purchasequotation_document">
        <xpath expr="//thead/tr/th[1]" position="before">
            <th>
                #
            </th>
            <t t-if="o.print_image and o.image_sizes in ('image_128', 'image_256', 'image_512') ">
                <th>
                    Product Image
                </th>
            </t>
        </xpath>
        <xpath expr="//table//tbody//tr//td[1]" position="before">
            <td>
                <span t-esc="order_line_index + 1"/>.
            </td>
            <t t-if="o.image_sizes == 'image_128' and o.print_image ">
                <td>
                    <span t-field="order_line.product_id.image_128"
                        t-options="{'widget': 'image', 'class': 'img-rounded'}"/>
                </td>
            </t>
            <t t-if="o.image_sizes == 'image_256' and o.print_image">
                <td>
                    <span t-field="order_line.product_id.image_256"
                        t-options="{'widget': 'image', 'class': 'img-rounded'}"/>
                </td>
            </t>
            <t t-if="o.image_sizes == 'image_512' and o.print_image ">
                <td>
                    <span t-field="order_line.product_id.image_512"
                        t-options="{'widget': 'image', 'class': 'img-rounded'}"/>
                </td>
            </t>
        </xpath>
    </template>

</odoo>
