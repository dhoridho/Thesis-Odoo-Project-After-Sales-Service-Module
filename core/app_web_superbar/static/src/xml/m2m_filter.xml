<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <!--独立的 filter m2m, m2o-->
    <div t-name='m2mWidgetFilter' class="o_form_view">
        <div t-foreach="fields" t-as="field" class="o_group o_inner_group">
            <div t-att-id="field + '_field'" style="min-width:120px;"/>
        </div>
    </div>
    <!--下面这个用于多个 field， 暂时不用-->
    <div t-name='m2mWidgetFilterList' class="o_form_view">
        <table class="o_group o_inner_group">
            <tr t-foreach="fields" t-as="field">
                <td  t-attf-class="o_form_label {{field.label ? '' : 'o_hidden'}}">
                    <label class="o_form_label" t-esc="fields[field].label"/>
                </td>
                <td t-att-id="field + '_field'" style="min-width:120px;"/>
            </tr>
        </table>
    </div>
</templates>
