<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_payroll_configuration_inherit_report" model="ir.ui.view">
        <field name="name">view.hr.payroll.configuration.inherit.report</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="scs_hr_payroll.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr='//div[@data-key="hr_payroll"]' position="inside">
                <h2>Payroll Configuration</h2>
                <div class="row mt16 o_settings_container" title="This help to validate employee identification number for NRIC employee ID Type">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_sg_nric_verification"
                                class="o_light_label"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_sg_nric_verification"/>
                        </div>
                    </div>
                </div>
                <div class="row mt16 o_settings_container" title="This will help to generate CIMB Bank text file report">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_sg_cimb_report"
                                class="o_light_label"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_sg_cimb_report"/>
                        </div>
                    </div>
                </div>
                <div class="row mt16 o_settings_container" title="This will help to generate OCBC Bank text file report">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_sg_ocbc_report"
                                class="o_light_label"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_sg_ocbc_report"/>
                        </div>
                    </div>
                </div>
                <div class="row mt16 o_settings_container" title="This help to generate Dbs giro file for salary payment upload to bank's site">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_sg_dbs_giro"
                                class="o_light_label"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_sg_dbs_giro"/>
                        </div>
                    </div>
                </div>
                <div class="row mt16 o_settings_container" title="This will help to generate APPENDIX8A income-tax report">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_sg_appendix8a_report"
                                class="o_light_label"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_sg_appendix8a_report"/>
                        </div>
                    </div>
                </div>
                <div class="row mt16 o_settings_container" title="This will help to generate APPENDIX8B income-tax report">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_sg_appendix8b_report"
                                class="o_light_label"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_sg_appendix8b_report"/>
                        </div>
                    </div>
                </div>
                <div class="row mt16 o_settings_container" title="This will help to generate IR21 report as per Singapore Payroll">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_sg_ir21"
                                class="o_light_label"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_sg_ir21"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>