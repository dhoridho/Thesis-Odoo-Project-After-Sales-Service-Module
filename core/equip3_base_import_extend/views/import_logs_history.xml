<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    <record id="import_log_history_view_search" model="ir.ui.view">
        <field name="name">import.log.history.view.search</field>
        <field name="model">import.log.history</field>
        <field name="arch" type="xml">
            <search string="Import Logs">
                <field name="name" />
                <field name="model_id" />
                
            </search>
        </field>
    </record>

        <record id="import_logs_history_view_form" model="ir.ui.view">
            <field name="name">import.log.history.view.form</field>
            <field name="model">import.log.history</field>
            <field name="arch" type="xml">
                <form string="Import Logs" create="0" edit="0">
                    <header modifiers="{}">
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group >
                                <field name="name"/>
                                <field name="model_id"/>
                                <field name="inserted_record" string="Inserted Record"/>
                                <field name="error_record" string="Error Record"/>
                                <field name="skipped_record" string="Skipped Record" invisible="1"/>
                                <field name="total_record" string="Record Total"/>
                                <field name="total_progress_char" string="Total Progress"/>
                                <field name="total_line_char" string="Line Total"/>
                                
                            </group>
                            <group>
                                <field name="import_datetime" />
                                <field name="completed_date" />
                                <field name="cron_running" />
                                <field name="file_error_name" invisible="1"/>
                                <field name="file_error_records"  widget="binary" filename="file_error_name" string="File Error Record"/>


                            </group>
                            
                        </group>
                        <notebook>
                        <page name="error_log" string="Error Log">
                            <field name="error_log"/>
                        </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>



        <record id="import_log_history_view_tree" model="ir.ui.view">
            <field name="name">import.log.history.view.tree</field>
            <field name="model">import.log.history</field>
            <field name="arch" type="xml">
                <tree string="Import Logs" create="0">
                    <field name="name" />
                    <field name="model_id" />
                    <field name="import_datetime" />
                    <field name="completed_date" />
                    <field name="cron_running" />
                    <field name="inserted_record" />
                    <field name="error_record" />
                    <field name="total_progress_char" />
                    <field name="total_line_char" string="Line Total"/>
                    <field name="skipped_record" invisible="1"/>
                    <field name="state" />
                    <field name="file_error_name" invisible="1"/>
                    <field name="file_error_records"  widget="binary" filename="file_error_name" string="File Error Record"/>
                    <field name="list_data" invisible="1"/>
                    <button type="object" string="View Records" name="act_view_records" attrs="{'invisible':[('list_data', '=', '[]')]}" class="oe_highlight"/>
                </tree>
            </field>
        </record>

        <record id="import_log_history__action" model="ir.actions.act_window">
            <field name="name">Import Logs</field>
            <field name="res_model">import.log.history</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p></p>
                
            </field>
        </record>


