<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="inherited_internal_transfer_wizard_form_view" model="ir.ui.view">
        <field name="name">inherited.internal.transfer.wizard.form.view</field>
        <field name="model">mr.internal_transfer</field>
        <field name="inherit_id" ref="equip3_inventory_operation.internal_transfer_wizard_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/field[@name='ir_wizard_line']/tree/field[@name='product_id']" position="before">
                <field name="project_scope"/>
                <field name="section"/>
                <field name="variable"/>
                <field name="group_of_product"/>
                <field name="construction_source_warehouse_domain" invisible="1"/>
            </xpath>
            <xpath expr="//form/sheet/field[@name='ir_wizard_line']/tree/field[@name='source_warehouse_id']" position="attributes">
                <attribute name="domain">construction_source_warehouse_domain</attribute>
            </xpath>
        </field>
    </record>
    <record id="inherited_intrawarehouse_transfer_from_view" model="ir.ui.view">
        <field name="name">inherited.intrawarehouse.transfer.form.view</field>
        <field name="model">intrawarehouse.transfer</field>
        <field name="inherit_id" ref="equip3_inventory_operation.intrawarehouse_transfer_from_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/field[@name='interawarehouse_transfer_ids']/tree/field[@name='product_id']" position="before">
                <field name="project_scope"/>
                <field name="section"/>
                <field name="variable"/>
                <field name="group_of_product"/>
            </xpath>
        </field>
    </record>
</odoo>