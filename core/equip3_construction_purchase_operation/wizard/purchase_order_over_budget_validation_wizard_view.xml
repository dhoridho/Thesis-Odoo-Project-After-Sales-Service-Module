<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_order_over_budget_validation_wizard_form_view" model="ir.ui.view">
        <field name="name">purchase.order.over.budget.validation.wizard.form.view</field>
        <field name="model">purchase.order.over.budget.validation.wizard</field>
        <field name="arch" type="xml">
            <form string="Reason">
                <field name="purchase_order_id" invisible="1"/>
                <field name="budgeting_method" invisible="1"/>
                <field name="warning_message" force_save="1"/>
                <footer>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" />
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>