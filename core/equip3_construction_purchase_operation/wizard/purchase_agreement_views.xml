<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="agreement_generate_view_form" model="ir.ui.view">
        <field name="name">agreement.generate.wizard.form</field>
        <field name="model">agreement.generate.wizard</field>
        <field name="arch" type="xml">
            <!-- Change string Create Purchase Agreement to Create Purchase Tender -->
            <form string="Create Purchase Tender">
                <group>
                    <field name="name" readonly="True"/>
                    <field name="vendor_id"/>
                </group>
                <group>
                    <field name="pur_agreement_line_ids" nolabel="1">
                        <tree editable="bottom">
                            <field name="no" readonly="True"/>
                            <field name="product_id"/>
                            <field name="description"/>
                            <field name="uom_id" readonly="True"/>
                            <field name="destination_warehouse_id" required="True"/>
                            <field name="purchase_qty" required="True"/>
                            <field name="request_date" required="True"/>
                            <field name="pur_agreement_id" invisible="1"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <!-- Change string Create Purchase Agreement to Create Purchase Tender -->
                    <button name="generate_agreement" type="object" string="Create Purchase Tender" class="oe_highlight"/>
                    <button special="cancel" string="Discard"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Change string Create Purchase Agreement to Create Purchase Tender -->
    <record id="agreement_generate_action" model="ir.actions.act_window">
        <field name="name">Create Purchase Tender</field>
        <field name="res_model">agreement.generate.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="agreement_generate_view_form"/>
    </record>
</odoo>
