<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_agreement_form" model="ir.ui.view">
        <field name="name">purchase.agreement.wiz</field>
        <field name="model">purchase.agreement.wiz</field>
        <field name="arch" type="xml">
            <form string="Create Purchase Agreement">
                <group>
                    <field name="request_date"/>
                    <field name="purchase_agreement_line" widget="one2many_list">
                        <tree editable="bottom">
                            <field name="project_scope" 
                                   options="{'no_create':True, 'no_quick_create':True, 'no_create_edit':True}"/>
                            <field name="section"
                                   options="{'no_create':True, 'no_quick_create':True, 'no_create_edit':True}"/>
                            <field name="variable" 
                                   options="{'no_create':True, 'no_quick_create':True, 'no_create_edit':True}"/>/>
                            <field name="quantity"/>
                            <field name="budget_quantity" force_save="1"/>
                            <field name="uom"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="create_purchase_agreemnet_submit" string="Submit" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="create_purchase_agreement_action" model="ir.actions.act_window">
        <field name="name">Create Purchase Agreement</field>
        <field name="res_model">purchase.agreement.wiz</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="equip3_construction_purchase_operation.purchase_agreement_form"/>
    </record>

</odoo>