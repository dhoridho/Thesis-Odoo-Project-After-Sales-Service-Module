<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="confirm_downpayment_purchase_view" model="ir.ui.view">
        <field name="name">confirm.downpayment.purchase</field>
        <field name="model">confirm.downpayment.purchase</field>
        <field name="arch" type="xml">
            <form string="Confirmation">
                <sheet>
                    <group>
                        <field name="txt" nolabel="1" readonly="1"/>
                    </group>
                    <footer>
                        <button name="action_confirm" string="Yes" type="object" class="oe_highlight" />
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </sheet>    
            </form>
        </field>
    </record>

</odoo>