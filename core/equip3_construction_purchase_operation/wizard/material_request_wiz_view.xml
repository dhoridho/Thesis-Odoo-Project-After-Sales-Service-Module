<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="material_request_form" model="ir.ui.view">
        <field name="name">material.request.wiz</field>
        <field name="model">material.request.wiz</field>
        <field name="arch" type="xml">
            <form string="Create Material Request">
                <group>
                    <group>
                        <field name="cost_sheet" invisible='1' readonly='1' force_save='1'/>
                        <field name="destination_warehouse"/>
                        <field name="schedule_date"/>
                        <field name="budgeting_period" invisible="1"/>
                        <field name="is_multiple_budget_procurement" invisible='1'/>
                        <label for="is_multiple_budget" attrs="{'invisible': ['|', ('is_multiple_budget_procurement', '=', False), ('budgeting_period', '=', 'project')]}"/>
                        <div name="multiple_budget_div" class="d-flex" attrs="{'invisible': ['|', ('is_multiple_budget_procurement', '=', False), ('budgeting_period', '=', 'project')]}">
                            <field name="is_multiple_budget" nolabel="1"/>
                            <field name="multiple_budget_ids" widget="many2many_tags"
                            attrs="{'required': [('is_multiple_budget', '!=', False)]}" nolabel="1"/>
                        </div>
                        <field name="analytic_group" widget="many2many_tags" invisible='1'/>
                        <field name="type_of_mr" required='1'/>
                    </group>
                </group>
                <footer>
                    <button name="create_material_request_submit" string="Submit" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>