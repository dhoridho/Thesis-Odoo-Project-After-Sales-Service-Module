<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_usage_generate_view_form" model="ir.ui.view">
        <field name="name">product.usage.generate.wizard.form</field>
        <field name="model">product.usage.generate.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Product Usage">
                <group>
                    <field name="name" readonly="True"/>
                    <field name="warehouse"/>
                    <field name="responsible"/>
                </group>
                <group>
                    <field name="product_usage_line_ids" nolabel="1">
                        <tree editable="bottom">
                            <field name="no" readonly="True"/>
                            <field name="product_id" required="True"/>
                            <field name="description"/>
                            <field name="uom_id" required="True"/>
                            <field name="source_location_id" required="True"/>
                            <field name="use_qty" required="True"/>
                            <field name="product_usage_id" invisible="1"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="generate_product_usage" type="object" string="Create Product Usage" class="oe_highlight"/>
                    <button special="cancel" string="Discard"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="product_usage_generate_action" model="ir.actions.act_window">
        <field name="name">Create Product Usage</field>
        <field name="res_model">product.usage.generate.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="product_usage_generate_view_form"/>
    </record>
</odoo>
