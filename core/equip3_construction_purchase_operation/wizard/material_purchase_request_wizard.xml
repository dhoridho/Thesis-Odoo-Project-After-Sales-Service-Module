<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="purchase_request_wizard_form_view_inherit" model="ir.ui.view">
        <field name="name">purchase.request.wizard.form.view.inherit</field>
        <field name="model">purchase.request.wizard</field>
        <field name="inherit_id" ref="equip3_inventory_operation.purchase_request_wizard_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='pr_wizard_line']" position="before">
                <field name="material_request" readonly='1' force_save='1' invisible='1'/>
            </xpath>
            <xpath expr="//field[@name='product_id']" position="before">
                <field name="cs_material_id" optional="hide" readonly="1" force_save="1"/>
                <field name="cs_labour_id" optional="hide" readonly="1" force_save="1" />
                <field name="cs_overhead_id" optional="hide" readonly="1" force_save="1" />
                <field name="cs_equipment_id" optional="hide" readonly="1" force_save="1" />
                <field name="bd_material_id" optional="hide" readonly="1" force_save="1" />
                <field name="bd_labour_id" optional="hide" readonly="1" force_save="1" />
                <field name="bd_overhead_id" optional="hide" readonly="1" force_save="1" />
                <field name="bd_equipment_id" optional="hide" readonly="1" force_save="1" />
                <field name="type" readonly="1" force_save="1" />
                <field name="project_scope" 
                       options="{'no_create':True, 'no_quick_create':True, 'no_create_edit':True}"/>
                <field name="section" 
                       options="{'no_create':True, 'no_quick_create':True, 'no_create_edit':True}"/>
                <field name="variable_ref" optional='hide'
                       options="{'no_create':True, 'no_quick_create':True, 'no_create_edit':True}"/>
                <field name="group_of_product" options="{'no_create':True, 'no_quick_create':True, 'no_create_edit':True}"/>
            </xpath>
        </field>
    </record>

    <record id="action_purchase_request_wizard" model="ir.actions.act_window">
        <field name="name">Purchase Request Wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.request.wizard</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>