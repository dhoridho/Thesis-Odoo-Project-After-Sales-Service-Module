<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- action -->
        <record id="variable_estimation_action" model="ir.actions.act_window">
            <field name="name">Variable</field>
            <field name="res_model">variable.template</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('variable_subcon', '=', False)]</field>
            <field name="context">{'default_variable_subcon':False}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Variable Template found. Let's create one!
                </p>
            </field>
        </record>

        <!-- action -->
        <record id="subcon_estimation_action" model="ir.actions.act_window">
            <field name="name">Job Subcon Estimate</field>
            <field name="res_model">variable.template</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('variable_subcon', '=', True)]</field>
            <field name="context">{'default_variable_subcon':True}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Job Subcon Estimate found. Let's create one!
                </p>
            </field>
        </record>

        <!-- menu -->
        <menuitem
            id="variable_estimation_menu"
            name="Variable"
            action="variable_estimation_action"
            parent="purchase.menu_purchase_config"
            sequence="0"/>

        <!-- menu -->
        <menuitem
            id="subcon_estimation_menu"
            name="Job Subcon Estimate"
            action="subcon_estimation_action"
            parent="purchase.menu_purchase_config"
            sequence="0"/>
    </data>
</odoo>
