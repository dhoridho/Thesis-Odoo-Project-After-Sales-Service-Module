<odoo>

    <record id="construction_purchase_project_task_inherit_form" model="ir.ui.view">
        <field name="name">Construction Purchase Project Task Inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='extra_info']//field[@name='displayed_image_id']" position="after">
                <field name="cs_subcon_id" readonly="1" force_save='1'/>
                <field name="bd_subcon_id" readonly="1" force_save='1'/>
                <field name="po_subcon_id" readonly="1" force_save='1'/>
            </xpath>
            <xpath expr="//field[@name='work_subcon_weightage']" position="attributes">
                <attribute name="readonly">1</attribute>
                <attribute name="force_save">1</attribute>
            </xpath>
            <xpath expr="//field[@name='purchase_subcon']" position="after">
                <field name="po_subcon_id" force_save='1' attrs="{'invisible':['|', ('is_subcon','=',False), ('po_subcon_id','!=',False)]}"/>
            </xpath>
        </field>
    </record>

</odoo>