<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="inherited_view_form_internal_transfer" model="ir.ui.view">
        <field name="name">inherited.view.form.internal.transfer</field>
        <field name="model">internal.transfer</field>
        <field name="inherit_id" ref="equip3_inventory_operation.view_form_internal_transfer"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='requested_by']" position="after">
                <field name="project" />
                <field name="cost_sheet" readonly="1" force_save="1" attrs="{'invisible': [('project', '=', False)]}"/>
                <field name="project_budget" force_save="1" string='Periodical Budget' attrs="{'invisible': [('project', '=', False)], 'readonly': [('cost_sheet', '=', False),('is_from_itr_wizard', '=', True)]}" domain="[('cost_sheet', '=', cost_sheet)]"/>
                <field name="type_of_mr" force_save="1" attrs="{'invisible': [('project', '=', False)], 'readonly': [('cost_sheet', '=', False),('is_from_itr_wizard', '=', True)]}"/>
                <field name="budgeting_method" attrs="{'invisible': [('project', '=', False)]}"/>
                <field name="budgeting_period" attrs="{'invisible': [('project', '=', False)]}"/>
                <field name="is_from_itr_wizard" invisible="1"/>
            </xpath>
            <xpath expr="//form/sheet/notebook/page/field[@name='product_line_ids']/tree/field[@name='product_id']" position="before">
                <field name="project" invisible='1'/>
                <field name="project_scope_domain" invisible='1'/>
                <field name="cs_material_gop_id" optional="hide" force_save="1" attrs="{'column_invisible': [('parent.project','=',False)]}"/>
                <field name="cs_labour_gop_id" optional="hide" force_save="1" attrs="{'column_invisible': [('parent.project','=',False)]}"/>
                <field name="cs_overhead_gop_id" optional="hide" force_save="1" attrs="{'column_invisible': [('parent.project','=',False)]}"/>
                <field name="bd_material_gop_id" optional="hide" force_save="1" attrs="{'column_invisible': [('parent.project','=',False)]}"/>
                <field name="bd_labour_gop_id" optional="hide" force_save="1" attrs="{'column_invisible': [('parent.project','=',False)]}"/>
                <field name="bd_overhead_gop_id" optional="hide" force_save="1" attrs="{'column_invisible': [('parent.project','=',False)]}"/>
                <field name="cs_material_id" optional="hide" force_save="1" attrs="{'column_invisible': [('parent.project','=',False)]}"/>
                <field name="cs_labour_id" optional="hide" force_save="1" attrs="{'column_invisible': [('parent.project','=',False)]}"/>
                <field name="cs_overhead_id" optional="hide" force_save="1" attrs="{'column_invisible': [('parent.project','=',False)]}"/>
                <field name="bd_material_id" optional="hide" force_save="1" attrs="{'column_invisible': [('parent.project','=',False)]}"/>
                <field name="bd_labour_id" optional="hide" force_save="1" attrs="{'column_invisible': [('parent.project','=',False)]}"/>
                <field name="bd_overhead_id" optional="hide" force_save="1" attrs="{'column_invisible': [('parent.project','=',False)]}"/>
                <field name="project_scope" attrs="{'column_invisible': [('parent.project','=',False)]}" domain="project_scope_domain"/>
                <field name="section" attrs="{'column_invisible': [('parent.project','=',False)]}"/>
                <field name="group_of_product" attrs="{'column_invisible': [('parent.project','=',False)]}"/>
            </xpath>
        </field>
    </record>
    <record id="inherited_view_form_stock_picking_internal_warehouse" model="ir.ui.view">
