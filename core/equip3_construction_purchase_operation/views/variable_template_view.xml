<odoo>

    <record id="purchase_agreement_reject_form" model="ir.ui.view">
        <field name="name">purchase.agreement.reject.form</field>
        <field name="model">purchase.request.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject Reason">
                <group>
                    <field name="reject_reason" required="1"/>
                </group>
                <footer>
                    <button name="action_reject" type="object" string="Submit" class="oe_highlight"/>
                    <button special="cancel" string="Discard"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="purchase_agreement_reject_action" model="ir.actions.act_window">
        <field name="name">Agreement Reject Reason</field>
        <field name="res_model">purchase.request.reject.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="purchase_agreement_reject_form"/>
    </record>

    <record id="rfq_variable_line_tree_view" model="ir.ui.view">
            <field name="name">rfq.variable.line.tree.view</field>
            <field name="model">rfq.variable.line</field>
            <field name="arch" type="xml">
                <tree create="0" edit="0">
                    <field name="sr_no"/>
                    <field name="variable"/>
                    <field name="quantity"/>
                    <field name="budget_quantity" readonly="1"/>
                    <field name="uom"/>
                    <field name="sub_total"/>
                    <field name="budget_amount" readonly="1"/>
                    <field name="total" force_save='1'/>
                    <field name="saving_cost"/>
                    <field name="budget_amount_total" readonly="1" force_save='1'/>
                    <field name="duration" />
                    <field name="state"/>
                    <field name="feedback"/>
                    <button name="send_confirm_msg" type="object" icon="fa-check"
                                class="oe_stat_button"/>
                    <button name="%(equip3_construction_purchase_operation.purchase_agreement_reject_action)d" type="action"
                            icon="fa-times" class="oe_stat_button"/>

                </tree>
            </field>
        </record>


</odoo>