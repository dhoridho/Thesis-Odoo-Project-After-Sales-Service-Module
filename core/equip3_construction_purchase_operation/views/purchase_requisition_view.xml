<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_form_purchase_requisition_construction_inherit" model="ir.ui.view">
        <field name="name">purchase.requisition.construction.inherit</field>
        <field name="model">purchase.requisition</field>
        <field name="inherit_id" ref="equip3_purchase_other_operation.view_form_purchase_requisition"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="before">
                <field name="project_id"/>
                <field name="cost_sheet_id"/>
                <field name="project_budget_id"/>
                <field name="budgeting_method" readonly="1"/>
            </xpath>
        </field>
    </record>

</odoo>