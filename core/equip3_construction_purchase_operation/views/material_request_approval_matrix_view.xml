<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mr_approval_matrix_form_view_inherited" model="ir.ui.view">
        <field name="name">mr.approval.matrix.form.view.inherited</field>
        <field name="model">mr.approval.matrix</field>
        <field name="inherit_id" ref="equip3_inventory_masterdata.view_form_approval_matrix_material"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='branch_id']" position="after">
                <field name="project" />
                <field name="department" invisible="1"/>
                <field name="type_of_mr" />
            </xpath>
            <xpath expr="//field[@name='create_uid']" position="after">
                <field name="minimum_amount" />
                <field name="maximum_amount" />
            </xpath>
        </field>
    </record>

    <!-- Add Sub Menu Material Requests Approval Matrix -->
    <record id="action_approval_matrix_material" model="ir.actions.act_window">
        <field name="name">Material Requests Approval Matrix</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mr.approval.matrix</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem id="approval_matrix_material_menu" 
        name="Material Requests Approval Matrix " 
        parent="equip3_purchase_accessright_setting.approval_matrix_configuration_menu" 
        action="action_approval_matrix_material" 
        sequence="5"/>
</odoo>