<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="cust_credit_limit_xls_view" model="ir.ui.view">
        <field name="name">cust.credit.limit.xls.view</field>
        <field name="model">cust.credit.limit.xls</field>
        <field name="arch" type="xml">
            <form string="Xls Report">
                <group>
                    <field name="excel_file" invisible="1" />
                    <field name="file_name" readonly="1" filename="excel_file" invisible="1" />
                    <button name="download_report" string="Customer Credit Limit Xls" type="object" class="oe_highlight" />
                </group>
                <footer>
                    <button string="Close" class="oe_highlight" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="cust_credit_limit_report_wizard" model="ir.ui.view">
        <field name="name">cust.credit.limit.report.wizard.form</field>
        <field name="model">cust.credit.limit.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Sale Details">
                <group>
                    <field name="partner_ids" options="{'no_create': True}" widget="many2many_tags" domain="[('is_customer', '=', True)]"/>
                    <field name="company_ids" options="{'no_create': True}" widget="many2many_tags" groups="base.group_multi_company" invisible="1"/>
                    <field name="branch_id" options="{'no_create': True}"/>
                </group>
                <footer>
                    <button name="print_report" string="Print" type="object" class="btn-primary" />
                    <button name="print_credit_limit_xls_report" string="Print Xls" type="object" class="oe_highlight" />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

