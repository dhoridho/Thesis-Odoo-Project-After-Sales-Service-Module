<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="customer_product_template_form_view" model="ir.ui.view">
        <field name="name">customer.product.template.form.view</field>
        <field name="model">customer.product.template</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="customer_id" attrs="{'readonly': [('readonly_customer','=',True)]}"/>
                        <field name="readonly_customer" invisible="1"/>
                        <field name="company_id" readonly="1" force_save="1"/>
                    </group>
                    <group>
                        <field name="creation_date" readonly="1" force_save="1"/>
                        <field name="created_by" readonly="1" force_save="1"/>
                    </group>
                </group>
                <notebook>
                    <page id="brand" string="Brand">
                        <group>
                            <field name="line_ids" nolabel="1" context="{'line_ids' : line_ids}">
                                <tree editable="bottom">
                                    <field name="sequence" invisible="1"/>
                                    <field name="res_sequence" readonly="1" force_save="1" style="text-align : center"/>
                                    <field name="product_id" required="1" widget="many2one"/>
                                    <field name="product_template_id" required="0" widget="many2one" invisible="1"/>
                                    <field name="product_label"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="customer_product_template_tree_view" model="ir.ui.view">
        <field name="name">customer.product.template.tree.view</field>
        <field name="model">customer.product.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="customer_id"/>
                <field name="creation_date"/>
                <field name="created_by"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="customer_product_template_line_form_view" model="ir.ui.view">
        <field name="name">customer.product.template.line.form.view</field>
        <field name="model">customer.product.template.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="customer_product_template_id"/>
                            <field name="company_id"/>
                            <field name="res_customer_id"/>
                        </group>
                        <group>
<!--                            <field name="product_template_id" string="Product Template"/>-->
                            <field name="product_id"/>
                            <field name="product_label"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_customer_product_template" model="ir.actions.act_window">
        <field name="name">Customer Products Label</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">customer.product.template</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.ui.menu" id="menu_customer_product_template">
        <field name='name'>Customer Products Label</field>
        <field name="parent_id" ref="equip3_sale_masterdata.products_menu"/>
        <field name="action" ref="action_customer_product_template"/>
    </record>
</odoo>