<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_form_limit_approval_matrix" model="ir.ui.view">
        <field name="name">limit.approval.matrix.form</field>
        <field name="model">limit.approval.matrix</field>
        <field name="arch" type="xml">   
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="company_id" readonly="True"/>
                            <field name="branch_id" domain="filter_branch"/>
                            <field name="filter_branch" invisible="1"/>
                            
                        </group>
                        <group>
                            <field name="create_date"/>
                            <field name="create_uid"/>
                            <field name="config"/>
                            <field name="minimum_amt" attrs="{'invisible': [('config','=','max_invoice_overdue_days')]}"/>
                            <field name="maximum_amt" attrs="{'invisible': [('config','=','max_invoice_overdue_days')]}"/>
                            <field name="minimal_days" attrs="{'invisible': [('config','!=','max_invoice_overdue_days')]}"/>
                            <field name="maximal_days" attrs="{'invisible': [('config','!=','max_invoice_overdue_days')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Approver Line">
                            <field name="approver_matrix_line_ids" context="{'approver_matrix_line_ids' : approver_matrix_line_ids}">
                                <tree editable="bottom" class="class_container_approver_matrix">
                                    <field name="sequence" widget="handle" />
                                    <field name="sequence2" force_save="1" readonly="1" class="approver_matrix_sequence"/>
                                    <field name="user_name_ids" widget="many2many_tags" options="{'no_create': True}"/>
                                    <field name="minimum_approver" />
                                    <field name="company_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_form_approval_matrix_sale_order_tree" model="ir.ui.view">
        <field name="name">Limit Approval Matrix Tree</field>
        <field name="model">limit.approval.matrix</field>
        <field name="arch" type="xml">
            <tree string="Lines">
                <field name="name"/>
                <field name="config"/>
                <field name="minimum_amt"/>
                <field name="maximum_amt"/>
                <field name="branch_id" />
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="action_limit_approval_matrix" model="ir.actions.act_window">
        <field name="name">Customers Limit Approval Matrix</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">limit.approval.matrix</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>            
    </record>

    <menuitem id="limit_approval_matrix"
        name="Customers Limit Approval Matrix"
        parent="equip3_sale_operation.menu_approval_matrix_sale_order"
        action="action_limit_approval_matrix"
        sequence="2"/>


</odoo>
