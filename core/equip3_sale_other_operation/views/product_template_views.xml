<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_label_product_template_form_view" model="ir.ui.view">
            <field name="name">product.label.product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page id="product_label" string="Products Label" attrs="{'invisible':[('show_customer_product_label', '=', False)]}">
                        <group>
                            <field name="product_label_line_ids" nolabel="1" context="{'default_from_product_template' : True,'default_product_template_id' : active_id}">
                                <tree editable="bottom">
                                    <field name="company_id" invisible="1"/>
                                    <field name="res_customer_id"/>
                                    <field name="res_product_label"/>
                                    <field name="from_product_template" invisible="1"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>

                <xpath expr="//field[@name='description_sale']" position="after">
                    <field name="show_customer_product_label" invisible="0"/>
                </xpath>
            </field>
        </record>

        <record id="product_label_product_product_form_view" model="ir.ui.view">
            <field name="name">product.label.product.product.form.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page id="product_label" string="Products Label" attrs="{'invisible':[('show_customer_product_label', '=', False)]}">
                        <group>
                            <field name="product_product_label_line_ids" nolabel="1" context="{'default_from_product' : True}">
                                <tree editable="bottom">
                                    <field name="company_id" invisible="1"/>
                                    <field name="res_customer_id"/>
                                    <field name="product_label"/>
                                    <field name="from_product" invisible="1"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>

                <xpath expr="//field[@name='description_sale']" position="after">
                    <field name="show_customer_product_label" invisible="0"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>