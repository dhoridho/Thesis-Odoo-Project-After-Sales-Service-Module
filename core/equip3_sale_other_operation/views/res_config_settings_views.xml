    <record id="view_form_res_config_settings" model="ir.ui.view">
        <field name="name">res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='sale_credit_limit_email_alerts']/../.." position="before">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane"></div>
                    <div class="o_setting_right_pane">
                        <label for="customer_credit_limit" />
                        <div class="text-muted">
                           Set The Default Credit Limit Account For New Customer
                        </div>
                        <div class="mt8">
                            <field name="customer_credit_limit" />
                        </div>
                        <label for="customer_max_invoice_overdue_days" />
