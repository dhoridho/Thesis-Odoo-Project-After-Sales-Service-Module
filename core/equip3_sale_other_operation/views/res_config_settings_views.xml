                        </div>
                        <label for="customer_open_invoice_limit"/>
                        <div class="text-muted">
                           Set The Default Numbers of Open Invoice Limit For New Customer.
                        </div>
                        <div class="mt8">
                            <field name="customer_open_invoice_limit" />
                            Invoices
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="res_config_settings_view_form_quotation_number_sale_other_operation" model="ir.ui.view">
