<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="warning_pop_message_for_limit_request" model="ir.ui.view">
        <field name="name">warning.pop.message.for.limit.request</field>
        <field name="model">limit.request.wizard</field>
        <field name="arch" type="xml">
            <form string="Warning Limit Request">
                <strong>Are you sure want to decrease limit amount for this customer ?</strong>
                <footer>
                    <button string="Ok" name="action_validate_limit_request" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_limit_request_wizard">
        <field name="name">Limit Request</field>
        <field name="res_model">limit.request.wizard</field>
        <field name="target">new</field>
    </record>

</odoo>