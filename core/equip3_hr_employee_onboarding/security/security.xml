<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record model="ir.rule" id="offboarding_multi_company">
        <field name="name">Employee Offboarding</field>
        <field name="model_id" ref="model_employee_offboarding"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>

    <record model="ir.rule" id="onboarding_multi_company">
        <field name="name">Employee Onboarding</field>
        <field name="model_id" ref="model_employee_orientation"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('employee_company','=',False),('employee_company', 'in', company_ids)]</field>
    </record>

</odoo>
