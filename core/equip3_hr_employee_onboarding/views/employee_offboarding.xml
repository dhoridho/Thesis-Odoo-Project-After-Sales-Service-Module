<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_employee_offboarding_tree" model="ir.ui.view">
            <field name="name">employee.offboarding.tree</field>
            <field name="model">employee.offboarding</field>
            <field name="arch" type="xml">
                <tree string="Employee Offboarding">
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="responsible_user_id"/>
                    <field name="exit_checklist_id"/>
                    <field name="state" decoration-primary="state == 'draft'"
                        decoration-warning="state == 'confirm'"
                        decoration-secondary="state == 'cancel'"
                        decoration-success="state == 'complete'" 
                        widget='badge'/>
                </tree>
            </field>
        </record>

        <record id="view_employee_offboarding_form" model="ir.ui.view">
            <field name="name">employee.offboarding.form</field>
            <field name="model">employee.offboarding</field>
            <field name="arch" type="xml">
                <form string="Employee Offboarding">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" states="draft" class="btn-primary" />
                        <button name="action_complete" string="Mark Done" type="object" states="confirm" class="btn-primary"/>
                        <button name="action_cancel" string="Cancel" type="object" states="draft,confirm"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,complete"/>
                    </header>
                    <sheet>
                        <div name="button_box" class="oe_button_box">
                            <button class="oe_stat_button" name="document_view" type="object" icon="o-hm-smart-hrm-documents">
                                <field string="Offboarding's Document" name="document_count" widget="statinfo"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="employee_id" attrs="{'readonly':[('state','in',('confirm','complete'))]}" domain="[('id','in',employee_domain_ids)]" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True,'create':False}"/>
                                <field name="department_id"/>
                                <field name="job_id"/>
                                <field name="parent_id"/>
                                <field name="exit_checklist_id" attrs="{'readonly':[('state','in',('confirm','complete'))]}" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True,'create':False}"/>
                                <field name="employee_domain_ids" invisible="1"/>
                            </group>
                            <group>
                                <field name="start_date_offboarding" attrs="{'readonly':[('state','in',('confirm','complete'))]}"/>
                                <field name="end_date_offboarding" attrs="{'readonly':[('state','in',('confirm','complete'))]}"/>
                                <field name="responsible_user_id" attrs="{'readonly':[('state','in',('confirm','complete'))]}" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True,'create':False}"/>
                                <field name="company_id" readonly="1"/>
                                <field name="exit_interview_id" attrs="{'readonly':[('state','in',('confirm','complete'))]}" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True,'create':False}"/>
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page name="exit_checklist" string="Exit Checklist">
                                <field name="exit_checklist_line_ids">
                                    <tree editable="bottom" create="0" delete="0">
                                        <field name="checklist_id" readonly="1" force_save="1" options="{'no_open': True}"/>
                                        <field name="document_type" readonly="1" force_save="1"/>
                                        <field name="activity_type" readonly="1" force_save="1"/>
                                        <field name="responsible_user_id" readonly="1" force_save="1" options="{'no_open': True}"/>
                                        <field name="attachment" filename="attachment_name" widget="binary" attrs="{'column_invisible':[('parent.state','=','draft')],'invisible':[('activity_type','=','to_do')],'readonly':[('state','in',('complete'))]}"/>
                                        <field name="attachment_name" invisible="1"/>
                                        <field name="feedback" readonly="1" force_save="1" attrs="{'column_invisible':[('parent.state','=','draft')]}"/>
                                        <field name="state" readonly="1" force_save="1"/>
                                        <button name="action_done" string="Mark Done" type="object" class="oe_highlight" attrs="{'invisible':['|','|',('activity_type','!=','to_do'),('state','=','completed'),('parent.state','!=','confirm')]}"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="exit_interview" string="Exit Interview">
                                <field name="exit_interview_line_ids">
                                    <tree editable="bottom" create="0" delete="0">
                                        <field name="name" readonly="1" force_save="1" options="{'no_open': True}"/>
                                        <field name="state" readonly="1" force_save="1"/>
                                        <button name="action_send_to_employee" string="Send to Employee" type="object" class="oe_highlight" attrs="{'invisible':['|','|',('email','!=',False),('state','=','completed'),('parent.state','!=','confirm')]}"/>
                                        <button name="action_resend_survey" string="Resend Survey" type="object" class="oe_highlight" attrs="{'invisible':['|','|',('email_state','!=','exception'),('state','=','completed'),('parent.state','!=','confirm')]}"/>
                                        <button name="action_see_results" string="See Results" type="object" class="oe_highlight" attrs="{'invisible':[('interview_result_count','=',0)]}"/>
                                        <button name="action_done" string="Mark Done" type="object" class="oe_highlight" attrs="{'invisible':['|',('state','=','completed'),('parent.state','!=','confirm')]}"/>
                                        <field name="response_id" readonly="1" force_save="1" invisible="1"/>
                                        <field name="interview_result_count" invisible="1"/>
                                        <field name="email" readonly="1" force_save="1" invisible="1"/>
                                        <field name="email_state" readonly="1" force_save="1" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="scoring_progress" string="Scoring Progress">
                                <field name="scoring_progress_ids">
                                    <tree editable="bottom" create="0" delete="0">
                                        <field name="offboarding_component" readonly="1" force_save="1"/>
                                        <field name="offboarding_weightage" attrs="{'readonly' : [('parent.state', '!=', 'draft')]}"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right">
                                    <field name="total_exit_weightage" string="Total"/>
                                    <field name="total_current_exit_weight"/>
                                </group>
                            </page>
                            <page name="note_book"
                                string="Notes">
                                <field name="note_id" colspan="4" nolabel="1" />
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_employee_offboarding_search" model="ir.ui.view">
            <field name="name">employee.offboarding.search</field>
            <field name="model">employee.offboarding</field>
            <field name="arch" type="xml">
                <search string="Employee Offboarding">
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <newline />
                </search>
            </field>
        </record>

        <record id="action_employee_offboarding" model="ir.actions.server">
            <field name="name">Employee Offboarding</field>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="model_id" ref="equip3_hr_employee_onboarding.model_employee_offboarding"/>
            <field name="code">action = model.custom_menu()</field>
            <field name="help" type="html">
                <field class="oe_view_nocontent_create">
                    Create Employee Offboarding.
                </field>
             </field>
        </record>

        <menuitem action="action_employee_offboarding" id="menu_employee_offboarding" name="Employee Offboarding" parent="employee_orientation.menu_employee_orientation" sequence="1" groups="hr.group_hr_manager,hr.group_hr_user"/>
    </data>
</odoo>