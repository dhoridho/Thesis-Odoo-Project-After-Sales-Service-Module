<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_employee_orientation_tree_inherit" model="ir.ui.view">
            <field name="name">employee.orientation.tree.inherit</field>
            <field name="model">employee.orientation</field>
            <field name="inherit_id" ref="employee_orientation.view_employee_orientation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='orientation_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='responsible_user']" position="after">
                    <field name="entry_checklist_id"/>
                </xpath>
            </field>
        </record>

        <record id="view_employee_orientation_form_inherit" model="ir.ui.view">
            <field name="name">employee.orientation.form.inherit</field>
            <field name="model">employee.orientation</field>
            <field name="inherit_id" ref="employee_orientation.view_employee_orientation_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/div" position="before">
                    <div name="button_box" class="oe_button_box">
                        <button class="oe_stat_button" name="document_view" type="object" icon="o-hm-smart-hrm-documents">
                            <field string="Onboarding's Document" name="document_count" widget="statinfo"/>
                        </button>
                    </div>
                </xpath>
                <xpath expr="//field[@name='job_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//field[@name='date']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='date']" position="after">
                    <field name="start_date_onboarding" attrs="{'readonly':[('state','in',('confirm','complete'))]}"/>
                    <field name="end_date_onboarding" attrs="{'readonly':[('state','in',('confirm','complete'))]}"/>
                </xpath>
                <xpath expr="//field[@name='orientation_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='employee_company']" position="after">
                    <field name="entry_checklist_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True,'create':False}" attrs="{'readonly':[('state','in',('confirm','complete'))]}"/>
                </xpath>
                <xpath expr="//field[@name='employee_company']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//page[@name='checklist_lines']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//page[@name='checklist_lines']" position="after">
                    <page name="entry_checklist" string="Entry Checklist">
                        <field name="checklist_line_ids">
                            <tree editable="bottom" create="0" delete="0">
                                <field name="checklist_id" readonly="1" force_save="1" options="{'no_open': True}"/>
                                <field name="document_type" readonly="1" force_save="1"/>
                                <field name="activity_type" readonly="1" force_save="1"/>
                                <field name="responsible_user_id" readonly="1" force_save="1" options="{'no_open': True}"/>
                                <field name="attachment" filename="attachment_name" widget="binary" attrs="{'column_invisible':[('parent.state','=','draft')],'invisible':[('activity_type','=','to_do')],'readonly':[('state','in',('complete'))]}"/>
                                <field name="attachment_name" invisible="1"/>
                                <field name="feedback" readonly="1" force_save="1" attrs="{'column_invisible':[('parent.state','=','draft')]}"/>
                                <field name="state" readonly="1" force_save="1"/>
                                <button name="action_done" string="Mark Done" type="object" class="oe_highlight" attrs="{'invisible':['|','|',('activity_type','!=','to_do'),('state','=','completed'),('parent.state','!=','confirm')]}"/>
                            </tree>
                        </field>
                    </page>
                    <page name="training" string="Training">
                        <field name="conduct_line_ids" context="{'default_employee_id':employee_name}">
                            <form>
                                <header>
                                    <field name='sequence' invisible="1"/>
                                    <field name='state' invisible="1"/>
                                    <button string="Confirm" name="action_confirm" states="draft" type="object"
                                        class="oe_highlight"/>
                                    <field name="stage_id" widget="statusbar" options="{'clickable': False, 'fold_field': 'fold'}"
                                        invisible="1"/>
                                    <field name="stage_course_id" widget="statusbar"
                                        options="{'clickable': False, 'fold_field': 'fold'}"
                                        domain="[('id','in',stage_course_domain_ids)]" attrs="{'invisible':[('is_training_approval_matrix','=',False)]}"/>
                                    <field name="state1"
                                        options="{'clickable': False, 'fold_field': 'fold'}"
                                        domain="[('id','in',stage_course_domain_ids), ('sequence','not in',[2, 6])]" attrs="{'invisible':[('is_training_approval_matrix','!=',False)]}"/>
                                </header>
                                <sheet>
                                    <div class="oe_button_box" name="button_box">
                                        <button name="get_participations" class="oe_stat_button" icon="o-hm-smart-hrm-test-result" type="object">
                                            <field name="participations_count" widget="statinfo" string="Test Result"/>
                                        </button>
                                    </div>
                                    <div class="oe_title">
                                        <h1 class="o_row">
                                            <field name="name" readonly="1"/>
                                        </h1>
                                    </div>
                                    <group>
                                        <group>
                                            <field name="stage_course_domain_ids" invisible="1"/>
                                            <field name="course_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True,'create':False}" attrs="{'readonly' : [('state', '!=', 'draft')]}"/>
                                            <field name="trainer_type" widget="radio" options="{'horizontal':true}" attrs="{'readonly' : [('state', '!=', 'draft')]}"/>
                                            <field name="training_level_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True,'create':False}" attrs="{'readonly' : [('state', '!=', 'draft')]}"/>
                                            <field name="venue_id" attrs="{'invisible' : [('trainer_type', '!=', 'external')], 'readonly' : [('state', '!=', 'draft')]}"/>
                                            <field name="employee_ids" widget="many2many_tags"
                                                attrs="{'invisible' : [('trainer_type', '=', 'external')], 'required' : [('trainer_type', '!=', 'external')], 'readonly' : [('state', '!=', 'draft')]}"/>
                                            <field name="external_trainer"
                                                attrs="{'invisible' : [('trainer_type', '!=', 'external')], 'required' : [('trainer_type', '=', 'external')], 'readonly' : [('state', '!=', 'draft')]}"/>
                                            <field name="employee_id" invisible="1"/>
                                            <field name="responsible_ids" widget="many2many_tags"
                                                attrs="{'invisible' : [('trainer_type', '!=', 'external')], 'readonly' : [('state', '!=', 'draft')]}"/>
                                            <label for="estimated_cost"/>
                                            <div>
                                                <field name="estimated_currency" class="oe_inline" no_label="1" attrs="{'readonly' : [('state', '!=', 'draft')]}"/>
                                                <field name="estimated_cost" class="oe_inline" no_label="1" attrs="{'readonly' : [('state', '!=', 'draft')]}"/>
                                            </div>
                                            <field name="certificate" attrs="{'readonly' : [('state', '!=', 'draft')]}"/>
                                            <field name="certificate_template"
                                                attrs="{'invisible' : [('certificate', '!=', True)], 'required' : [('certificate', '=', True)], 'readonly' : [('state', '!=', 'draft')]}"/>
                                        </group>
                                        <group>
                                            <field name="start_date" required="True" attrs="{'readonly' : [('state', '!=', 'draft')]}"/>
                                            <field name="end_date" required="True" attrs="{'readonly' : [('state', '!=', 'draft')]}"/>
                                            <field name="minimal_score" string="Minimum Score" attrs="{'readonly' : [('state', '!=', 'draft')]}"/>
                                            <field name="company_id" invisible="1"/>
                                            <field name="created_date" readonly="1" force_save="1"/>
                                            <field name="created_by" readonly="1"
                                                options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True,'create':False}"/>
                                            <field name="job_id" invisible="1"/>
                                            <field name="department_id" invisible="1"/>
                                            <field name="approvers_ids" widget="many2many_tags" invisible="1"/>
                                            <field name="approved_user_ids" widget="many2many_tags" invisible="1" readonly="0"/>
                                            <field name="is_approver" invisible="1"/>
                                            <field name="approved_user_text" invisible="1"/>
                                            <field name="approved_user" invisible="1" readonly="1"/>
                                            <field name="feedback_parent" invisible="1"/>
                                            <field name="edit_score" invisible="1"/>
                                            <field name="is_training_approval_matrix" invisible="1"/>
                                        </group>
                                    </group>
                                    <notebook>
                                        <page string="Training Conduct Line">
                                            <field name="current_stage" invisible="1"/>
                                            <field name="conduct_line_ids" context="{'default_employee_id':employee_id}">
                                                <tree editable="bottom" create="0" delete="0">
                                                    <field name='employee_domain_ids' widget="many2many_tags" invisible='1'/>
                                                    <field name="edit_score" invisible="1"/>
                                                    <field name="is_next_stage_executed" invisible="1"/>
                                                    <field name="employee_id" options="{'no_open': True,'no_create': True}"  domain="[('id','not in', employee_domain_ids)]" readonly="1" force_save="1"/>
                                                    <field name="attended"/>
                                                    <field name="remarks"/>
                                                    <field name="attachment"/>
                                                    <field name="certificate_attachment" filename="certificate_attachment_fname"
                                                        widget="binary" invisible="1"/>
                                                    <field name="certificate_attachment_fname" invisible="1"/>
                                                    <field name="pre_test" string="Pre-Test" force_save="1"/>
                                                    <field name="post_test" string="Post-Test" force_save="1"/>
                                                    <field name="final_score" readonly="1" force_save="1"/>
                                                    <field name="status" string="Status" force_save="1"/>
                                                </tree>
                                            </field>
                                        </page>
                                        <page string="Approval Matrix Lines" attrs="{'invisible':[('is_training_approval_matrix','=',False)]}">
                                            <field name="training_approver_user_ids">
                                                <tree editable="bottom" create="false" delete="false">
                                                    <field name="name"/>
                                                    <field name="user_ids" widget="many2many_tags" readonly="1" force_save="1"/>
                                                    <field name="minimum_approver" readonly="1" force_save="1"/>
                                                    <field name="timestamp" invisible="1" force_save="1"/>
                                                    <field name="approver_state" invisible="1" force_save="1"/>
                                                    <field name="approval_status" readonly="1" force_save="1"/>
                                                    <field name="approved_time" readonly="1" force_save="1"/>
                                                    <field name="is_approve" invisible="1" force_save="1"/>
                                                    <field name="approved_employee_ids" invisible="1"/>
                                                    <field name="feedback" readonly="1" force_save="1"/>
                                                </tree>
                                            </field>
                                        </page>
                                    </notebook>
                                </sheet>
                            </form>
                            <tree>
                                <field name="course_id"/>
                                <field name="trainer_type" invisible="1"/>
                                <field name="employee_ids" widget="many2many_tags"/>
                                <field name="external_trainer"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="current_stage" invisible="1"/>
                                <field name="stage_course_id" decoration-primary="current_stage == 'New'" decoration-warning="current_stage == 'To Approve'" decoration-warning2="current_stage == 'On Progress'" decoration-secondary="current_stage == 'More'" decoration-success="current_stage == 'Approved'" decoration-success2="current_stage == 'Completed'" widget="badge" string="Status"/>
                                <field name="training_level_id" invisible="1"/>
                                <field name="venue_id" invisible="1"/>
                                <field name="minimal_score" invisible="1"/>
                                <field name="estimated_currency" invisible="1"/>
                                <field name="estimated_cost" invisible="1"/>
                                <field name="certificate" invisible="1"/>
                                <field name="certificate_template" invisible="1"/>
                                <field name="conduct_line_ids" invisible="1"/>
                            </tree>
                        </field>
                    </page>
                    <page name="elearning" string="ELearning">
                        <field name="elearning_line_ids">
                            <tree editable="bottom">
                                <field name="course_id" readonly="0" force_save="1" required="1"/>
                                <field name="user_id"/>
                                <field name="expected_date"/>
                                <field name="progress" widget="progressbar"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </page>
                    <page name="scoring_progress" string="Scoring Progress">
                        <field name="scoring_progress_ids">
                            <tree editable="bottom" create="0" delete="0">
                                <field name="onboarding_component" readonly="1" force_save="1"/>
                                <field name="onboarding_weightage" attrs="{'readonly' : [('parent.state', '!=', 'draft')]}"/>
                            </tree>
                        </field>
                        <group class="oe_subtotal_footer oe_right">
                            <field name="total_entry_weightage" string="Total"/>
                            <field name="total_current_entry_weight"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
        <record id="employee_orientation.action_employee_orientation" model="ir.actions.server">
            <field name="name">Employee Onboarding</field>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="model_id" ref="employee_orientation.model_employee_orientation"/>
            <field name="code">action = model.custom_menu()</field>
            <field name="help" type="html">
                <field class="oe_view_nocontent_create">
                    Create Employee Onboarding.
                </field>
            </field>
        </record>
    </data>
</odoo>