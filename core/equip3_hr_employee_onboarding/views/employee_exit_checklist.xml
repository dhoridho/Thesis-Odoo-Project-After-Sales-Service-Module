<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="employee_exit_checklist_view_search" model="ir.ui.view">
            <field name="name">employee.exit.checklist.search</field>
            <field name="model">employee.exit.checklist</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="employee_exit_checklist_view_tree" model="ir.ui.view">
            <field name="name">employee.exit.checklist.tree</field>
            <field name="model">employee.exit.checklist</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="department_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <record id="employee_exit_checklist_view_form" model="ir.ui.view">
            <field name="name">employee.exit.checklist.form</field>
            <field name="model">employee.exit.checklist</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="department_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="company_id"/>
                                <field name="create_date"/>
                                <field name="create_uid"/>
                            </group>
                        </group>
                        <field name="checklist_line_ids" options="{'no_create': True}" domain="[('company_id','=',company_id),('document_type','=','exit')]">
                            <tree string="Checklist Lines" editable="bottom">
                                <field name="name" readonly="1" force_save="1"/>
                                <field name="document_type" readonly="1" force_save="1"/>
                                <field name="activity_type" readonly="1" force_save="1"/>
                                <field name="responsible_user_id" readonly="1" force_save="1"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_employee_exit_checklist" model="ir.actions.act_window">
            <field name="name">Exit Checklist</field>
            <field name="res_model">employee.exit.checklist</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="employee_exit_checklist_view_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a Exit Checklist
                </p>
            </field>
        </record>

         <menuitem id="menu_employee_exit_checklist" name="Exit Checklist" parent="hr.menu_human_resources_configuration" sequence="5"
              action="action_employee_exit_checklist"/>

        <record model='ir.ui.menu' id='menu_employee_exit_checklist'>
            <field name="groups_id" eval="[(6, 0, [ref('equip3_hr_employee_access_right_setting.group_hr_officer')])]"/>
        </record>

    </data>
</odoo>