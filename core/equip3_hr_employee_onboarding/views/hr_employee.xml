<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_employee_form_inherit" model="ir.ui.view">
            <field name="name">hr.employee.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/header" position="inside">
                    <button name="%(launch_plan_wizard_action)d" string="Launch Plan" type="action" groups="hr.group_hr_manager"/>
                </xpath>
                <field name="category_ids" position="after">
                    <div>
                        <field name="onboarding_progress" widget="percentpie"/>
                        <field name="offboarding_progress" widget="percentpie" class="oe_inline"/>
                    </div>
                </field>
                <page name="hr_settings" position="after">
                    <page name="employee_lifecycle" string="Employee Lifecycle">
                        <group>
                            <group name="onboarding_cycle" string="Onboarding Cycle">
                                <field name="onboarding_entry_checklist_ids" readonly="1">
                                    <tree editable="bottom">
                                        <field name="line_id" invisible="1"/>
                                        <field name="name"/>
                                        <field name="check"/>
                                    </tree>
                                </field>
                                <field name="onboarding_training_ids" readonly="1">
                                    <tree editable="bottom">
                                        <field name="line_id" invisible="1"/>
                                        <field name="name"/>
                                        <field name="check"/>
                                    </tree>
                                </field>
                                <field name="onboarding_elearning_ids" readonly="1">
                                    <tree editable="bottom">
                                        <field name="line_id" invisible="1"/>
                                        <field name="name"/>
                                        <field name="check"/>
                                    </tree>
                                </field>
                            </group>
                            <group name="offboarding_cycle" string="Offboarding Cycle">
                                <field name="offboarding_exit_checklist_ids" readonly="1">
                                    <tree editable="bottom">
                                        <field name="line_id" invisible="1"/>
                                        <field name="name"/>
                                        <field name="check"/>
                                    </tree>
                                </field>
                                <field name="offboarding_exit_interview_ids" readonly="1">
                                    <tree editable="bottom">
                                        <field name="line_id" invisible="1"/>
                                        <field name="name"/>
                                        <field name="check"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </page>
                </page>
            </field>
        </record>

        <!--Hr Employee inherit search view-->
        <record id="hr_employee_view_search" model="ir.ui.view">
            <field name="name">hr.employee.search.view.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='job_id']" position="after">
                    <filter name="onboarding_inprogress" string="Onboarding in progress" domain="[('onboarding_inprogress', '=', True)]"/>
                    <filter name="offboarding_inprogress" string="Offboarding in progress" domain="[('offboarding_inprogress', '=', True)]"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>