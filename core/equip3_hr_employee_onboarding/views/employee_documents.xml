<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="employee_document_form_view_inherit" model="ir.ui.view">
            <field name="name">hr.employee.document.form.inherit</field>
            <field name="model">hr.employee.document</field>
            <field name="inherit_id" ref="oh_employee_documents_expiry.employee_document_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="onboarding_id" invisible="1"/>
                    <field name="offboarding_id" invisible="1"/>
                    <field name="checklist_document_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="attrs">{'readonly': ['|',('onboarding_id', '!=', False),('offboarding_id', '!=', False)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='checklist_document_id']" position="attributes">
                    <attribute name="attrs">{'readonly': ['|',('onboarding_id', '!=', False),('offboarding_id', '!=', False)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='employee_ref']" position="attributes">
                    <attribute name="attrs">{'readonly': ['|',('onboarding_id', '!=', False),('offboarding_id', '!=', False)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='doc_attachment_id']" position="attributes">
                    <attribute name="attrs">{'readonly': ['|',('onboarding_id', '!=', False),('offboarding_id', '!=', False)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='issue_date']" position="attributes">
                    <attribute name="attrs">{'readonly': ['|',('onboarding_id', '!=', False),('offboarding_id', '!=', False)]}</attribute>
                </xpath>
            </field>
        </record>
    </data>

    <record model='ir.ui.view' id='employee_documents_onboarding_tree_view'>
        <field name="name">hr.employee.document.onboarding.tree</field>
        <field name="model">hr.employee.document</field>
        <field name="arch" type="xml">
            <tree create="0">
                <field name="name"/>
                <field name="employee_ref" string="Employee"/>
                <field name="checklist_document_id"/>
                <field name="issue_date"/>
            </tree>
        </field>
    </record>

    <record model='ir.ui.view' id='employee_document_onboarding_form_view'>
        <field name="name">hr.employee.document.onboarding.form</field>
        <field name="model">hr.employee.document</field>
        <field name="arch" type="xml">
            <form create="0">
                <sheet>
                    <group>
                        <group>
                            <field name="name" attrs="{'readonly': ['|',('onboarding_id', '!=', False),('offboarding_id', '!=', False)]}"/>
                            <field name="onboarding_id" invisible="1"/>
                            <field name="offboarding_id" invisible="1"/>
                            <field name="checklist_document_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}" attrs="{'readonly': ['|',('onboarding_id', '!=', False),('offboarding_id', '!=', False)]}"/>
                            <field name="employee_ref" string="Employee" options="{'no_quick_create':True,'no_create_edit':True,'no_create': True}" attrs="{'readonly': ['|',('onboarding_id', '!=', False),('offboarding_id', '!=', False)]}"/>
                            <field name="document_type"/>
                            <field name="doc_attachment_id" widget="many2many_binary" class="oe_inline" attrs="{'readonly': ['|',('onboarding_id', '!=', False),('offboarding_id', '!=', False)]}"/>
                        </group>
                        <group>
                            <field name="issue_date" attrs="{'readonly': ['|',('onboarding_id', '!=', False),('offboarding_id', '!=', False)]}"/>
                            <field name="expiry_date"/>
                            <field name="notification_type"/>
                            <field name="before_days" attrs="{'invisible' : [('notification_type', '=', 'single')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>