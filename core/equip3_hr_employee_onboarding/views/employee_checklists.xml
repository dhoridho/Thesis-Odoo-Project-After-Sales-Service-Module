<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model='ir.ui.view' id='employee_checklists_tree_view'>
            <field name="name">employee.checklists.tree</field>
            <field name="model">employee.checklists</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                    <field name="document_type"/>
                    <field name="activity_type"/>
                    <field name="responsible_user_id"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record id="action_employee_checklists" model="ir.actions.act_window">
            <field name="name">Checklists</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">employee.checklists</field>
            <field name="view_mode">tree</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a Checklists
                </p>
            </field>
        </record>

        <menuitem id="menu_employee_checklists" name="Checklists" parent="hr.menu_human_resources_configuration" sequence="3"
              action="action_employee_checklists"/>

        <record model='ir.ui.menu' id='menu_employee_checklists'>
            <field name="groups_id" eval="[(6, 0, [ref('equip3_hr_employee_access_right_setting.group_hr_officer')])]"/>
        </record>

    </data>
</odoo>