        <menuitem id="menu_hr_offboarding_exit_interview" 
        parent="hr.menu_human_resources_configuration"
        action="action_survey_hr_offboarding_exit_interview" 
        name="Exit Interview"
        sequence="6"/>

        <record model='ir.ui.menu' id='menu_hr_offboarding_exit_interview'>
            <field name="groups_id" eval="[(6, 0, [ref('equip3_hr_employee_access_right_setting.group_hr_officer')])]"/>
