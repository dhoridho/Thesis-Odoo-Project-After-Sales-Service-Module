<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="mail_template_exit_interview" model="mail.template">
            <field name="name">Exit Interview</field>
            <field name="model_id" ref="model_employee_offboarding"/>
            <field name="email_from">${ctx.get('email_from')}</field>
            <field name="subject">Exit Interview - ${ctx['employee_name']}</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px; font-size: 13px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hi ${ctx['employee_name']},
                        <br/>
                        <br/>
                        Here's an automatic email for the Exit Interview.<br/><br/>

                        Click the following button to access it:<br/>

                        <div style="margin: 16px 0px 16px 0px;">
                            <a href="${ctx.get('url_interview')}"
                               style="background-color: #875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;">
                                Start Interview
                            </a>
                        </div>
                        <br/><br/>
                        Thank you.
                    </p>
                </div>
            </field>
            <field name="auto_delete" eval="False"/>
        </record>
    </data>
</odoo>