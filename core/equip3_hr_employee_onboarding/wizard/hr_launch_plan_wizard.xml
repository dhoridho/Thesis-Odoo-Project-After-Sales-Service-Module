<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="launch_plan_wizard" model="ir.ui.view">
            <field name="name">launch plan wizard</field>
            <field name="model">hr.launch.plan.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="plan"/>
                            <field name="employee_id" invisible="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_launch" string="Launch Plan" type="object" class="oe_highlight" groups="hr.group_hr_manager"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="launch_plan_wizard_action" model="ir.actions.act_window">
            <field name="name">Launch Plan</field>
            <field name="res_model">hr.launch.plan.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="hr_onboarding_offboarding_wizard" model="ir.ui.view">
            <field name="name">Plan Confirmation</field>
            <field name="model">hr.onboarding.offboarding.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="description" nolabel="1" readonly="1"/>
                            <field name="plan" invisible="1"/>
                            <field name="employee_id" invisible="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_confirm" string="Yes" type="object" class="oe_highlight" groups="hr.group_hr_manager"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="hr_onboarding_offboarding_wizard_action" model="ir.actions.act_window">
            <field name="name">Launch Confirmation</field>
            <field name="res_model">hr.onboarding.offboarding.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
