<odoo>
    <record id="view_purchase_order_team_form" model="ir.ui.view">
        <field name="name">view.purchase.order.team.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='purchase_delivery_invoice']//field[@name='user_id']" position="after">
                <field name="team_id" domain="[('company_id','=',company_id)]" options="{'no_create': True}"/>
            </xpath>
        </field>
    </record>

    <record id="view_purchase_order_report_team_filter" model="ir.ui.view">
        <field name="name">view.purchase.order.report.filter</field>
        <field name="model">purchase.report</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='group_partner_id']" position="after">
                <filter string="Purchase Team" name="group_team_id" context="{'group_by':'team_id'}"/>
            </xpath>
        </field>
    </record>
</odoo>