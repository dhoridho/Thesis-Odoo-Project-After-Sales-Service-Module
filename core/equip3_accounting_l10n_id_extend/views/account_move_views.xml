<odoo>
    <record id="view_account_invoice_discount_form" model="ir.ui.view">
        <field name="name">account.invoice.discount.form.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@class='oe_subtotal_footer oe_right']/field[@name='amount_tax']" position="attributes">
                <attribute name="invisible">attrs</attribute>
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//group[@class='oe_subtotal_footer oe_right']/field[@name='amount_tax']" position="after">
                <field name="total_ppn" readonly='1' force_save='1' widget="monetary" options="{'currency_field': 'currency_id'}" attrs="{'invisible': [('amount_tax', '=', 0)]}" />
                <field name="total_pph" readonly='1' force_save='1' widget="monetary" options="{'currency_field': 'currency_id'}" attrs="{'invisible': [('amount_tax', '=', 0)]}" />
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='tax_ids']" position="after">
                <field name="ppn_tax" string='PPN' optional="hide" readonly='1' force_save='1'/>
                <field name="pph_tax" string='PPH' optional="hide" readonly='1' force_save='1'/>
            </xpath>

        </field>
    </record>
</odoo>
    