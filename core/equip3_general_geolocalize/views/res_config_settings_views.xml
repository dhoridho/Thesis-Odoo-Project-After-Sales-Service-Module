<odoo>
  <data>
    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
      <field name="name">res.config.settings.view.form.inherit.web.geoloclaize.inherit</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="base_geolocalize.res_config_settings_view_form"/>
      <field name="arch" type="xml">
<!--        <xpath expr="//div[@id='geolocalize_params']" position="attributes">-->
<!--          <attribute name="invisible">1</attribute>-->
<!--        </xpath>-->
        <xpath expr="//div[@id='base_geolocalize']" position="attributes">
          <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//div[@id='base_geolocalize']" position="after">
          <div class="col-12 col-lg-6 o_setting_box" id="geolocalize">
            <div class="o_setting_left_pane">
              <field name="geolocalize"/>
            </div>
            <div class="o_setting_right_pane" id="web_geolocalize_setting">
              <label string="Geo Localization" for="geolocalize"/>
              <div class="text-muted">
                GeoLocalize your partners
              </div>
              <div class="alert alert-warning oe_edit_only" role="alert" attrs="{'invisible': ['|',('geolocalize', '=', True),('geoloc_provider_id', '=', False)]}">
                Changing the value to False will delete the API and Key.
              </div>
              <div id="geolocalize_params"
                   class="content-group"
                   attrs="{'invisible': [('geolocalize', '=', False)]}">
                API: <field name="geoloc_provider_id"/>
                <field name="geoloc_provider_techname" invisible="1"/>
                <div attrs="{'invisible': [('geoloc_provider_techname', '!=', 'googlemap')]}">
                  Key: <field name='geoloc_provider_googlemap_key'/>
                </div>
              </div>
            </div>
          </div>
        </xpath>
      </field>
    </record>
  </data>
</odoo>