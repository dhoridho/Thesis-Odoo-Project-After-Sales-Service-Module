<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Partner form view -->
    <record id="inherit_view_crm_partner_geo_form" model="ir.ui.view">
        <field name="name">inherit_view_crm_partner_geo_form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base_geolocalize.view_crm_partner_geo_form" />
        <field name="arch" type="xml">
            <field name="partner_longitude" position="replace">
                 <field name="partner_longitude" nolabel="1" class="oe_inline" options="{'negative_allow':True}"/>
            </field>
            <field name="partner_latitude" position="replace">
                 <field name="partner_latitude" nolabel="1" class="oe_inline" options="{'negative_allow':True}"/>
            </field>

        </field>
    </record>
</odoo>