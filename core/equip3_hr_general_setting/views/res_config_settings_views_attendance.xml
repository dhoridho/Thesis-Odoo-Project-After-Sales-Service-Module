<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="hr_attendance.res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.hr.attendance</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="30"/>
            <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
                <field name="arch" type="xml">
                    <xpath expr="//div[@id='hr_root_page']" position="inside">
                        <!-- <div class="app_settings_block" data-string="Attendances" string="Attendances" data-key="hr_attendance" > -->
                            <br></br>
                            <p>
                                <h3 style="text-indent: 15px;">Attendances</h3>
    
                            </p>
                            
                            <h2>Check-In/Out</h2>
                                <!-- <h2>Check-In/Out</h2> -->
                                
                                <div class="row mt16 o_settings_container" name="pincode_setting_container" data-key="hr_attendance" groups="hr_attendance.group_hr_attendance_manager">
                                    <div class="col-12 col-lg-6 o_setting_box" title="Set PIN codes in the employee detail form (in HR Settings tab)." id="employee_pin" >
                                        <div class="o_setting_left_pane">
                                            <field name="group_attendance_use_pin"/>
                                        </div>
                                        <div class="o_setting_right_pane" >
                                            <span class="o_form_label">Employee PIN</span>
                                            <div class="text-muted">
                                                Use PIN codes to check in in Kiosk Mode
                                            </div>
                                        </div>
                                    </div>
                        <!-- </div> -->
                    </div>

                    
                   

                </xpath>
            </field>
        </record>


        <record id="equip3_hr_attendance_extend.res_config_settings_view_attendance_equip3_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.attendance</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="99"/>
            <field name="inherit_id" ref="hr_attendance.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='pincode_setting_container']" position="after">
                    <div class="row mt16 o_settings_container" id="attendance_status">
                        <div class="col-12 col-lg-6 o_setting_box" id="attendance_status_settings">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Default Attendance Status</span>
                                <div class="text-muted">
                                    Attendance Status
                                </div>
                                <div class="text-muted">
                                    <field name="attendance_status"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Attendance Approval Setting</h2>
                    <div class="row mt16 o_settings_container" name="attendance_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="attendance_control_setting">
                            <div class="content-group">
                                <div class="mt16">
                                    <label for="attendance_type_approval" string="Approval Method"/>
                                    <field style="margin-left:10px;" name="attendance_type_approval" class="oe_inline"
                                           required="1"/>
                                </div>
                                <div class="mt16"
                                     attrs="{'invisible':[('attendance_type_approval','!=','employee_hierarchy')]}">
                                    <label for="attendance_level" string="Approval Levels"/>
                                    <field style="margin-left:16px;" name="attendance_level" class="oe_inline"
                                           required="1"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Validation Setting</h2>
                    <div class="row mt16 o_settings_container" id="attendance_status">
                        <div class="col-12 col-lg-6 o_setting_box" id="attendance_status_settings">
                            <div class="o_setting_left_pane">
                                <div class="text-muted">
                                <field name="attendance_validation"/>
                            </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Validation</span>
                                <div class="text-muted">
                                    Allow Validation for schedule exchanges in the past date
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Notification</h2>
                    <div class="row mt16 o_settings_container"
                         name="attendance_notification_setting_wa_container">
                        <div class="col-12 col-lg-6 o_setting_box"
                             id="attendance_notification_wa_setting">
                            <div class="o_setting_left_pane">
                                <field name="send_by_wa_attendance"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Send By Whatsapp" for="send_by_wa_attendance"/>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container"
                         name="attendance_notification_setting_email_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="attendance_notification_email_setting">
                            <div class="o_setting_left_pane">
                                <field name="send_by_mail_attendance"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Send By Email" for="send_by_mail_attendance"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>




        <record id="geo_location_attendance_knk.res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.hr.attendance</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr_attendance.res_config_settings_view_form"/>
                <field name="arch" type="xml">
                    <xpath expr="//div[@name='pincode_setting_container']" position="inside">
                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box" title="Set attendance range to allow signin/signout to the employees withing this range.">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <label string="Attendance Range" for="attendance_range" class="col-lg-3 o_light_label"/>
                                    <field name="attendance_range"/> Meter
                                    <div class="text-muted">
                                        Set attendance range to allow signin/signout
                                        to the employees withing this range.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </xpath>
                </field>
        </record>
    

    </data>
</odoo>
