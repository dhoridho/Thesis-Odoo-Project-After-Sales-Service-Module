<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="equip3_hr_travel_extend.equip3_hr_travel_extend_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.equip3_hr_travel_extend</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='hr_root_page']" position="inside">
                    <!-- <div class="app_settings_block" data-string="Travel Approval" string="Travel Approval"
                         data-key="equip3_hr_travel_extend"> -->
                    <p>
                        <h3 style="text-indent: 15px;">Travel</h3>

                    </p>
                    <h2>Travel Approval Setting</h2>
                    <div class="row mt16 o_settings_container" name="travel_approval_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="travel_approval_control_setting"
                             title="Travel Approval">
                            <div class="content-group">
                                <div class="mt16">
                                    <label for="travel_type_approval" string="Approval Method"/>
                                    <field style="margin-left:10px;" name="travel_type_approval" class="oe_inline"
                                           required="1"/>
                                </div>
                                <div class="mt16"
                                     attrs="{'invisible':[('travel_type_approval','!=','employee_hierarchy')]}">
                                    <label for="travel_level" string="Approval Levels"/>
                                    <field style="margin-left:16px;" name="travel_level" class="oe_inline"
                                           required="1"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Notification</h2>
                    <div class="row mt16 o_settings_container" name="travel_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box"
                             id="equip3_hr_travel_extend.travel_notification_wa_setting">
                            <div class="o_setting_left_pane">
                                <field name="send_by_wa_travel"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Send By Whatsapp" for="send_by_wa_travel"/>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container"
                         name="equip3_hr_travel_extend.whatsapp_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box"
                             id="equip3_hr_travel_extend.notification_email_setting">
                            <div class="o_setting_left_pane">
                                <field name="send_by_email"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Send By Email" for="send_by_email"/>
                            </div>
                        </div>
                    </div>
                    <!-- </div> -->
                </xpath>
            </field>
        </record>

