<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="equip3_hr_career_transition.res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.equip3_hr_career_transition</field>
        <field name="model">res.config.settings</field>
        <!-- <field name="priority" eval="70"/> -->
        <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='hr_root_page']" position="inside">
                <!-- <div class="app_settings_block" data-string="Career Transition" string="Career Transition" data-key="equip3_hr_career_transition" > -->
                    <p>
                        <h3 style="text-indent: 15px;">Career Transition</h3>
        
                    </p>
                    <h2>Career Transition Approval Setting</h2>
                    <div class="row mt16 o_settings_container" name="career_transition_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="career_transition_control_setting" title="Presence of employees">
                            <div class="content-group">
                                <div class="mt16">
                                    <label for="type_approval" string="Approval Method"/>
                                    <field style="margin-left:10px;" name="type_approval" class="oe_inline" required="1"/>
                                </div>
                                <div class="mt16" attrs="{'invisible':[('type_approval','!=','employee_hierarchy')]}">
                                    <label for="level" string="Approval Levels"/>
                                    <field style="margin-left:16px;" name="level" class="oe_inline" required="1"/>
                                </div>
                            </div>
                        </div>
                    </div>
                <!-- </div> -->
            </xpath>
        </field>
    </record>

   
</odoo>
