<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="equip3_hr_expense_extend.res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.equip3_hr_expense_extend</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="hr_expense.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='hr_expense']" position="after">
                <h2>Expense Approval Setting</h2>
                <div class="row mt16 o_settings_container" name="expense_setting_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="expense_control_setting"
                         title="Presence of employees">
                        <div class="content-group">
                            <div class="mt16">
                                <label for="expense_type_approval" string="Approval Method"/>
                                <field style="margin-left:10px;" name="expense_type_approval" class="oe_inline"
                                       required="1"/>
                            </div>
                            <div class="mt16"
                                 attrs="{'invisible':[('expense_type_approval','!=','employee_hierarchy')]}">
                                <label for="expense_level" string="Approval Levels"/>
                                <field style="margin-left:16px;" name="expense_level" class="oe_inline" required="1"/>
                            </div>
                        </div>
                    </div>
                </div>

                <h2>Expense Notification Setting</h2>
                <div class="row mt16 o_settings_container" name="expense_notification_setting_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="expense_notification_control_setting">
                        <div class="content-group">
                            <div class="mt16">
                                <label for="expense_reminder_before_days" string="Reminder Before" style="width: 35%;"/>
                                <field style="margin-left:10px;" name="expense_reminder_before_days" class="oe_inline"/>
                                <span style="padding-left: 7px;">Days</span>
                            </div>
                            <div class="mt16" attrs="{'required':[('expense_reminder_before_days','&gt;', 0)]}">
                                <label for="expense_choose_color_reminder" string="Choose Color Reminder" style="width: 34%;"/>
                                <field style="margin-left:16px;" name="expense_choose_color_reminder"
                                       class="oe_inline"/>
                            </div>
                        </div>
                    </div>
                </div>
                <h2>Notification</h2>
                <div class="row mt16 o_settings_container"
                     name="expense_notification_setting_wa_container">
                    <div class="col-12 col-lg-6 o_setting_box"
                         id="expense_notification_wa_setting">
                        <div class="o_setting_left_pane">
                            <field name="send_by_wa_expense"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label string="Send By Whatsapp" for="send_by_wa_expense"/>
                        </div>
                    </div>
                </div>
                <div class="row mt16 o_settings_container"
                     name="expense_notification_setting_email_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="expense_notification_email_setting">
                        <div class="o_setting_left_pane">
                            <field name="send_by_email_expense"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label string="Send By Email" for="send_by_email_expense"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>