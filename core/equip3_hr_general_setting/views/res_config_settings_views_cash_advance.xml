    <record id="equip3_hr_cash_advance.view_form_res_config_settings_cash_advance_form" model="ir.ui.view">
        <field name="name">res.config.settings.form.ca.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="31"/>
        <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//div[@id='hr_root_page']" position="inside">
                <!-- <div class="app_settings_block" web_icon="account, static/description/icon.png" data-string="Cash Advanced" string="Cash Advance" data-key="equip3_accounting_accessright_setting"> -->
            <br></br>
            <p>
                <h3 style="text-indent: 15px;">Cash Advance</h3>

            </p>
                    <div id="cash_advanced">
                        <h2>Cash Advance Account Setting</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="cash_advanced">
                                <div class="content-group">
                                    <div class="mt16"
                                         groups="equip3_accounting_accessright_setting.group_cash_advance_manager">
                                        <label for="deposit_reconcile_journal_id" string="Reconcile Journal"/>
                                        <field style="margin-left:10px;" name="deposit_reconcile_journal_id"
                                               class="oe_inline" required="1"/>
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16"
                                         groups="equip3_accounting_accessright_setting.group_cash_advance_manager">
                                        <label for="journal_id" string="Payment Method"/>
                                        <field style="margin-left:17px;" name="journal_id" class="oe_inline"
                                               domain="[('type', 'in', ('bank', 'cash'))]" required="0"/>
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16"
                                         groups="equip3_accounting_accessright_setting.group_cash_advance_manager">
                                        <label for="deposit_account_id" string="Advance Account"/>
                                        <field style="margin-left:12px;" name="deposit_account_id" class="oe_inline"
                                               required="1"/>
                                    </div>
                                </div>
                            </div>
                        </div>


                <h2>Cash Advance Approval Setting</h2>
                <div class="row mt16 o_settings_container" name="cash_advance_setting_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="cash_advance_control_setting"
                         title="Presence of employees">
                        <div class="content-group">
                            <div class="mt16">
                                <label for="cash_type_approval" string="Approval Method"/>
                                <field style="margin-left:10px;" name="cash_type_approval" class="oe_inline" required="1"/>
                            </div>
                            <div class="mt16" attrs="{'invisible':[('cash_type_approval','!=','employee_hierarchy')]}">
                                <label for="cash_level" string="Approval Levels"/>
                                <field style="margin-left:16px;" name="cash_level" class="oe_inline" required="1"/>
                            </div>
                        </div>
                    </div>
                </div>
                        <h2>Notification</h2>
                        <div class="row mt16 o_settings_container"
                             name="cash_advance_notification_wa_setting_container">
                            <div class="col-12 col-lg-6 o_setting_box"
                                 id="cash_advance_notification_wa_setting">
                                <div class="o_setting_left_pane">
                                    <field name="send_by_wa_cashadvance"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label string="Send By Whatsapp" for="send_by_wa_cashadvance"/>
                                </div>
                            </div>
                        </div>
                        <div class="row mt16 o_settings_container"
                             name="cash_advance_notification_email_setting_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="cash_advance_notification_email_setting">
                                <div class="o_setting_left_pane">
                                    <field name="send_by_email_cashadvance"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label string="Send By Email" for="send_by_email_cashadvance"/>
                                </div>
                            </div>
                        </div>
                    </div>
                <!-- </div> -->
            </xpath>

        </field>

    </record>



    <record id="equip3_accounting_accessright_setting.view_form_res_config_settings_cash_advance_form" model="ir.ui.view">
        <field name="name">res.config.settings.form.ca.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="0"/>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]/div[@data-key='account']" position="after">
                <div></div>
                
            </xpath>

        </field>

    </record>



</odoo>