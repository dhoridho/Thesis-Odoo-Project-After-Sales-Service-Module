<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="equip3_manuf_form_import_ceisa_documents" model="ir.ui.view">
            <field name="name">equip3.manuf.form.import.ceisa.documents</field>
            <field name="inherit_id" ref="equip3_manuf_it_inventory.form_import_ceisa_documents"/>
            <field name="model">ceisa.import.documents</field>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before">
                    <header>
                        <button name="action_ceisa_send_import_document" attrs="{'invisible':[('is_ceisa_it_inventory', '=', False)]}" string="Send import document" type="object"/>
                    </header>
                    <field name="is_ceisa_it_inventory" invisible="1"/>
                </xpath>
                <xpath expr="//sheet/notebook/page[@name='pengangkut']/group/group/div/field[@name='storehouse_location']" position="after">
                    <button name="update_storehouse_location" type="object" help="Dapatkan data Tempat Penimbunan Sementara (TPS)" class="btn-link mb-1 px-0" icon="fa-refresh"
                    attrs="{'invisible':[('is_ceisa_it_inventory', '=', False)]}" />
                </xpath>
                <xpath expr="//sheet/notebook/page[@name='transaction']/group/group/div/field[@name='ndpbm']" position="after">
                    <button name="update_ndpbm" type="object" help="Sesuaikan dengan valuta terbaru" class="btn-link mb-1 px-0" icon="fa-refresh"
                    attrs="{'invisible':[('is_ceisa_it_inventory', '=', False)]}" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>