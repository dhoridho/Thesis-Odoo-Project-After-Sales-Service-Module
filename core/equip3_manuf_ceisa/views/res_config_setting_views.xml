<odoo>
    <data>
        <record id="view_general_configuration_inherit" model="ir.ui.view">
            <field name="name">res.config.settings.form.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="mrp.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='mrp']" position="inside">
                    <h2 attrs="{'invisible':[('is_ceisa_it_inventory', '=', False)]}">CEISA 4.0</h2>
                    <div class="row mt16 o_settings_container" name="ceisa_user_connector" attrs="{'invisible':[('is_ceisa_it_inventory', '=', False)]}">
                        <div class="col-12 col-lg-6 o_setting_box" id="ceisa_user_login_fields">
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row mt16">
                                        <field name="is_ceisa_it_inventory" invisible="1"/>
                                        <label for="ceisa_user" class="col-lg-3 o_light_label" string="Username"/>
                                        <field name="ceisa_user"/>
                                    </div>
                                    <div class="row mt16">
                                        <label for="ceisa_password" class="col-lg-3 o_light_label" string="Password"/>
                                        <field name="ceisa_password" password="True" />
                                    </div>
                                    <div class="col-lg-6 col-12 o_setting_box">
                                        <button string="Connect" type="object" class="oe_highlight" name="action_submit_ceisa_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" id="other_ceisa_user_connector">
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

