<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="view_stock_picking_ceisa_export_document" model="ir.ui.view">
        <field name="name">view.stock.picking.ceisa.export.document.inherited</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_export_document" string="Export Document" type="object"
                    class="btn btn-secondary" groups="equip3_manuf_ceisa.group_ceisa_user"
                    attrs="{'invisible': ['|', ('state', 'not in', ['confirmed', 'assigned']), ('picking_type_code', '=', 'incoming')]}"
                />
                <button name="action_import_document" string="Import Document" type="object"
                    class="btn btn-secondary" groups="equip3_manuf_ceisa.group_ceisa_user"
                    attrs="{'invisible': ['|', ('state', 'not in', ['confirmed', 'assigned']), ('picking_type_code', '!=', 'incoming')]}"
                />
            </xpath>
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button name="action_view_export_document"
                        string="Export Documents"
                 type="object"
                 class="oe_stat_button order-11"
                 attrs="{'invisible': ['|', '&amp;', ('export_document_count', '=', 0), ('state', 'not in', ['confirmed', 'assigned']), ('picking_type_code', '=', 'incoming')]}"
                 icon="fa-mobile">
                    <field name="export_document_count" widget="statinfo" string="Export Document" invisible="1"/>
                </button>
            </xpath>
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button name="action_view_import_document"
                        string="Import Documents"
                 type="object"
                 class="oe_stat_button order-11"
                 attrs="{'invisible': ['|', '&amp;', ('import_document_count', '=', 0), ('state', 'not in', ['confirmed', 'assigned']), ('picking_type_code', '!=', 'incoming')]}"
                 icon="fa-mobile">
                    <field name="import_document_count" widget="statinfo" string="Import Document" invisible="1"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
