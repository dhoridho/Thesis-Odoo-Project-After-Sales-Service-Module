<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="view_internal_transfer_ceisa_exim_document" model="ir.ui.view">
        <field name="name">view.internal.transfer.ceisa.exim.document.inherited</field>
        <field name="model">internal.transfer</field>
        <field name="inherit_id" ref="equip3_inventory_operation.view_form_internal_transfer"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_export_document" string="Export Document" type="object"
                    class="btn btn-secondary" groups="equip3_manuf_ceisa.group_ceisa_user"
                />
                <button name="action_import_document" string="Import Document" type="object"
                    class="btn btn-secondary" groups="equip3_manuf_ceisa.group_ceisa_user"
                />
            </xpath>
        </field>
    </record>
</odoo>
