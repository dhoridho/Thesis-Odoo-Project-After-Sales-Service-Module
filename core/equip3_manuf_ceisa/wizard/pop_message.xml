<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
    <record id="view_pop_message_form" model="ir.ui.view">
        <field name="name">pop.message.form</field>
        <field name="model">ceisa.pop.message</field>
        <field name="arch" type="xml">
            <form string="Message">
                <style>
                    .modal .modal-dialog {
                        transform: translateY(-100px);
                        transition: all .5s;
                        max-width: 500px;
                    }
                </style>
                <field name="name" readonly="1" nolabel="1" style="font-weight:bold;"/>
                <field name="info" widget="html" readonly="1" nolabel="1" attrs="{'invisible':[('info','=',None)]}"/>
                <footer>
                   <button string="Close" class="oe_highlight" special="cancel"/>
                </footer>
           </form>
        </field>
    </record>

</data>
</odoo>
