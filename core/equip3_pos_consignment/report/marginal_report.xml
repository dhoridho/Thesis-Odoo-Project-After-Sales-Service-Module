<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="marginal_report_list_modifier" model="ir.ui.view">
        <field name="name">marginal_report_list_modifier</field>
        <field name="model">marginal.report</field>
        <field name="inherit_id" ref="equip3_inventory_consignment.reporting_marginal_report"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='purchase_price']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='consignee']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='sale_order_name']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
     </record>
</odoo>