<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_order_view_form_inherited" model="ir.ui.view">
        <field name="name">purchase.order.view.form.inherited</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='qty_received']" position="after">
                <field name="sold_qty" readonly="1" attrs="{'column_invisible': ['|',('parent.state', '!=', 'purchase'), ('parent.is_consignment', '=', False)]}"/>
                <field name="sold_price" readonly="1" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="form_dev_purchase_down_payment_inherited" model="ir.ui.view">
        <field name="name">form.dev.purchase.down.payment.inherited</field>
        <field name="model">purchase.down.payment</field>
        <field name="inherit_id" ref="dev_purchase_down_payment.form_dev_purchase_down_payment"/>
        <field name="arch" type="xml">
            <xpath expr="//div" position="attributes">
              <attribute name="attrs">{'invisible': [('down_payment_by', 'not in', ('fixed','percentage'))]}</attribute>
            </xpath>
            <xpath expr="//label[@for='amount']" position="attributes">
              <attribute name="attrs">{'invisible': [('down_payment_by', 'not in', ('fixed','percentage'))]}</attribute>
            </xpath>
        </field>
    </record>

    <record id="equip3_purchase_operation.purchase_rfq_orders" model="ir.actions.act_window">
        <field name="domain">
            [('dp', '=', False),
            ('state', 'in', ['draft', 'sent', 'waiting_for_approve', 'rfq_approved']),
            ('po', '=', False),
            ('agreement_id','=',False)]
        </field>
    </record>
</odoo>
