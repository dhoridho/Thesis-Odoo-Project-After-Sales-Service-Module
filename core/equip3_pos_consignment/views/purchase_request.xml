<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_request_view_form_inherited" model="ir.ui.view">
        <field name="name">purchase.request.view.form.inherited</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_approved']" position="after">
                <button
                    name="%(purchase_request.action_purchase_request_line_make_purchase_order)d"
                    string="Create Consignment"
                    type="action"
                    attrs="{'invisible':['|',('state','not in',('purchase_request')),('purchase_req_state', 'not in', ('pending','in_progress'))]}"
                    class="oe_highlight"
                    context="{'default_is_consignment': True}"
                />
            </xpath>
        </field>
    </record>

     <record id="view_purchase_request_line_make_purchase_order_inherited" model="ir.ui.view">
        <field name="name">view.purchase.request.line.make.purchase.order.inherited</field>
        <field name="model">purchase.request.line.make.purchase.order</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_line_make_purchase_order"/>
        <field name="arch" type="xml">
            <!-- Add your xpath here -->
            <field name="supplier_id" position="after">
                <field name="is_consignment" invisible="1"/>
            </field>
            <xpath expr="//form/separator" position="replace">
                <separator string="Create RFQ" attrs="{'invisible':[('is_consignment','=',True)]}"/>
                <separator string="Create Consignment" attrs="{'invisible':[('is_consignment','=',False)]}"/>
            </xpath>
            <xpath expr="//field[@name='item_ids']/tree/field[@name='product_id']" position="attributes">
                <attribute name="string">Product Article</attribute>
            </xpath>
            <xpath expr="//footer" position="replace">
                <footer>
                    <button
                        name="mod_make_purchase_order"
                        string="Create RFQ"
                        type="object"
                        class="oe_highlight"
                        attrs="{'invisible':[('is_consignment','=',True)]}"
                    />
                    <button
                        name="mod_make_purchase_order"
                        string="Create Consignment"
                        type="object"
                        class="oe_highlight"
                        attrs="{'invisible':[('is_consignment','=',False)]}"
                    />
                    <button special="cancel" string="Cancel" class="oe_link" />
                </footer>
            </xpath>
        </field>
    </record>

</odoo>