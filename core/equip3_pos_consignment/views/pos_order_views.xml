<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	
    <record id="consignment_pos_order_line_view_tree" model="ir.ui.view">
        <field name="name">consignment.pos.order.line.view.tree</field>
        <field name="model">pos.order.line</field>
        <field name="priority">5005</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0">
                <field name="order_id"/>
                <field name="product_id"/>
                <field name="pack_lot_ids" widget="many2many_tags"/>
                <field name="qty"/>
                <field name="price_unit" widget="monetary"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_pos_order_tree_all_sales_lines_inherit" model="ir.ui.view">
        <field name="name">view.pos.order.tree.all.sales.lines.inherit</field>
        <field name="model">pos.order.line</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_tree_all_sales_lines"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="consignment_agreement_id" context="{'default_from_consignment': True}"/>
            </xpath>
        </field>
    </record>
    
    <record id="view_pos_order_line_form_inherit" model="ir.ui.view">
        <field name="name">view.pos.order.line.form.inherit</field>
        <field name="model">pos.order.line</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="consignment_agreement_id" context="{'default_from_consignment': True}"/>
            </xpath>
        </field>
    </record>

</odoo>


