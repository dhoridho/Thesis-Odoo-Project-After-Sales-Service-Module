<?xml version="1.0"?>
<odoo>
    <record id="res_config_settings_applicant_limit_inherit_view" model="ir.ui.view">
        <field name="name">res.config.settings.inherit.applicant.limit.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="equip3_hr_recruitment_extend.res_config_settings_view_form_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='recruitment_control_setting_approval']" position="after">
                <h2>Limit</h2>
                <div class="row mt16 o_settings_container"
                name="equip3_applicant_limit_connector.online_posting_setting_container">
               <div class="col-12 col-lg-6 o_setting_box"
                    id="equip3_applicant_limit_connector.applicant_limit">
                   <div class="o_setting_left_pane">
                       <field name="is_limit_applicant"/>
                   </div>
                   <div class="o_setting_right_pane">
                    <label string="Limit Applicant" for="is_limit_applicant"/>
                   </div>
                   <div class="content-group">
                    <div class="mt16" attrs="{'invisible':[('is_limit_applicant','=',False)]}">
                        <label class="col-lg-3 o_light_label" string="Server Domain" for="server_domain"/>
                        <field name="server_domain" class="oe_inline" attrs="{'required':[('is_limit_applicant','=',True)]}" />
                        </div>
    
                       <div class="mt16" attrs="{'invisible':[('is_limit_applicant','=',False)]}">
                        <label class="col-lg-3 o_light_label" string="User" for="user"/>
                        <field name="user" class="oe_inline" attrs="{'required':[('is_limit_applicant','=',True)]}" />
                        </div>
                       <div class="mt16" attrs="{'invisible':[('is_limit_applicant','=',False)]}">
                        <label class="col-lg-3 o_light_label" string="Password" for="password"/>
                        <field name="password" class="oe_inline" attrs="{'required':[('is_limit_applicant','=',True)]}" password="True"/>
                        </div>
    
                       <div class="mt16" attrs="{'invisible':[('is_limit_applicant','=',False)]}">
                        <label class="col-lg-3 o_light_label" string="Secret Key" for="secret_key"/>
                        <field name="secret_key" class="oe_inline" attrs="{'required':[('is_limit_applicant','=',True)]}" />
                        </div>

                   </div>
                   


                    <!-- <div class="o_setting_right_pane">
                        <label for="website_name" string="Website Title"/>
                        <span class="fa fa-lg fa-globe" title="Values set here are website-specific." groups="website.group_multi_website"/>
                        <div class="text-muted">
                            Name and favicon of your website
                        </div>
                        <div class="content-group">
                            <div class="row mt16">
                                <label class="col-lg-3 o_light_label" string="Name" for="website_name"/>
                                <field name="website_name" attrs="{'required': [('website_id', '!=', False)]}"/>
                            </div>
                            <div class="row">
                                <label class="col-lg-3 o_light_label" for="favicon"/>
                                <field name="favicon" widget="image" class="float-left oe_avatar"/>
                            </div>
                        </div>
                        </div> -->

               </div>
           </div>
           
                      
            </xpath>
        </field>
    </record>
</odoo>