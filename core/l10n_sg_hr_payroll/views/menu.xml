<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <menuitem id="menu_report_payroll1" name="Reports" parent="hr.menu_hr_root"
      sequence="15" groups="l10n_sg_hr_payroll.group_hr_payroll_admin"/>

    <!-- Salary Related Menus Access Rights -->
    <record id="scs_hr_payroll.menu_hr_payroll_structure_view" model="ir.ui.menu">
        <field name="name">Salary Structure</field>
        <field name="parent_id" ref="scs_hr_payroll.menu_hr_payroll_configuration"/>
        <field name="groups_id" eval="[(6, 0, [ref('base.group_system'), ref('group_hr_payroll_admin')])]"/>
        <field name="action" ref="scs_hr_payroll.action_view_hr_payroll_structure_list_form"/>
    </record>

    <record id="scs_hr_payroll.menu_hr_salary_rule_category" model="ir.ui.menu">
        <field name="name">Salary Rule Category</field>
        <field name="parent_id" ref="scs_hr_payroll.menu_hr_payroll_configuration"/>
        <field name="groups_id"   eval="[(6, 0, [ref('base.group_system'), ref('group_hr_payroll_admin')])]"/>
        <field name="action" ref="scs_hr_payroll.action_hr_salary_rule_category"/>
        <field name="sequence">11</field>
    </record>

    <record id="scs_hr_payroll.menu_action_hr_salary_rule_form" model="ir.ui.menu">
        <field name="name">Salary Rule</field>
        <field name="parent_id" ref="scs_hr_payroll.menu_hr_payroll_configuration"/>
        <field name="groups_id"   eval="[(6, 0, [ref('base.group_system'), ref('group_hr_payroll_admin')])]"/>
        <field name="action" ref="scs_hr_payroll.action_salary_rule_form"/>
        <field name="sequence">13</field>
    </record>

    <!-- HR Menus -->
    <menuitem
        id="scs_hr_payroll.menu_action_hr_contribution_register_form"
        parent="scs_hr_payroll.menu_hr_payroll_configuration"
        name="Contribution Register"
    	sequence="10"
        groups="base.group_system,group_hr_payroll_admin" />

    <menuitem
        action="scs_hr_payroll.action_view_hr_payslip_form"
        groups="group_hr_payroll_admin,hr.group_hr_manager,-hr.group_hr_user"
        id="scs_hr_payroll.menu_department_tree"
        parent="scs_hr_payroll.menu_hr_payroll_root"/>
    <menuitem
        action="scs_hr_payroll.action_hr_payslip_run_tree"
        groups="group_hr_payroll_admin,-hr.group_hr_manager,-hr.group_hr_user"
        id="scs_hr_payroll.menu_hr_payslip_run"
        parent="scs_hr_payroll.menu_hr_payroll_root"/>
    <menuitem
        action="hr_contract.action_hr_contract"
        id="hr_contract.hr_menu_contract"
        parent="scs_hr_payroll.menu_hr_payroll_root"
        name="Contracts" sequence="4"
        groups="hr.group_hr_manager,group_hr_payroll_admin"/>

</odoo>
