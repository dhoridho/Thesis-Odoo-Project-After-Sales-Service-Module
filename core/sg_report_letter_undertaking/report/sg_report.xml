<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="sg_report_letter" model="ir.actions.report">
        <field name="name">Letter Undertaking</field>
        <field name="model">wiz.employee.letter.undertaking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sg_report_letter_undertaking.report_form_letter</field>
    </record>

    <record id="sg_letter_undertaking_paper_format" model="report.paperformat">
        <field name="name">SG Letter Undertaking</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="margin_top">30</field>
        <field name="margin_bottom">20</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">20</field>
        <field name="dpi">90</field>
        <field name="orientation">Portrait</field>
        <field name="report_ids"
            eval="[(4, ref('sg_report_letter_undertaking.sg_report_letter'))]"></field>
    </record>

</odoo>
