<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- it.inventory.document.type form view -->
    <record id="document_type_view_form" model="ir.ui.view">
        <field name="name">it.inventory.document.type.view.form</field>
        <field name="model">it.inventory.document.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="document_code"/>
                            <field name="document_type"/>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- it.inventory.document.type tree view -->
    <record id="document_type_view_tree" model="ir.ui.view">
        <field name="name">it.inventory.document.type.view.tree</field>
        <field name="model">it.inventory.document.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="document_code"/>
                <field name="document_type"/>
            </tree>
        </field>
    </record>
    
    <!-- it.inventory.document.type action window -->
    <record id="document_type_action" model="ir.actions.act_window">
        <field name="name">Jenis Dokumen</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">it.inventory.document.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create a New Document Type
            </p>
        </field>
    </record>

</odoo>