<odoo>
    <data>
        <record id="view_general_configuration_inherit" model="ir.ui.view">
            <field name="name">res.config.settings.form.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="equip3_general_setting.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='implementor_general_manufacturing']" position="after">
                    <h2>IT Inventory</h2>
                    <div class="row mt16 o_settings_container" name="manuf_it_inventory">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane" id="is_it_inventory">
                                <field name="is_it_inventory" class="oe_inline"/>
                            </div>
                            <div class="o_setting_right_pane" id="desc_is_it_inventory">
                                <label for="is_it_inventory"/>
                                <div class="content-group" attrs="{'invisible':[('is_it_inventory', '=', False)]}">
                                    <div class="mt16">
                                        <div class="o_setting_left_pane" id="is_ceisa_it_inventory">
                                            <field name="is_ceisa_it_inventory" class="oe_inline" readonly="0"/>
                                        </div>
                                        <div class="o_setting_right_pane" id="desc_is_ceisa_it_inventory">
                                            <label for="is_ceisa_it_inventory" string="CEISA 4.0"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

