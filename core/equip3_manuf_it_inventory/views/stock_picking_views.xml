<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">view_picking_form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_locked']" position="before">
                <field name="is_it_inventory_warehouse" invisible="1"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page name="it_inventory_warehouse" string="IT Inventory" attrs="{'invisible': [('is_it_inventory_warehouse', '=', False)]}">
                    <group>
                        <group>
                            <field name="it_document_type_po" string="Document Type" attrs="{'required': [('is_it_inventory_warehouse', '=', True), ('picking_type_code', '=', 'incoming')], 'invisible': [('picking_type_code', '!=', 'incoming')]}"/>
                            <field name="it_document_type_so" string="Document Type" attrs="{'required': [('is_it_inventory_warehouse', '=', True), ('picking_type_code', '=', 'outgoing')], 'invisible': [('picking_type_code', '!=', 'outgoing')]}"/>
                            <field name="it_request_number" string="Request Number" attrs="{'required': [('is_it_inventory_warehouse', '=', True)]}"/>
                        </group>
                        <group>
                            <field name="it_registration_number" string="Registration Number" attrs="{'required': [('is_it_inventory_warehouse', '=', True)]}"/>
                            <field name="it_registration_date" string="Registration Date" attrs="{'required': [('is_it_inventory_warehouse', '=', True)]}"/>
                        </group>
                    </group>
                </page>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="action_export_document" string="Export Document" type="object"
                    class="btn btn-secondary" groups="equip3_manuf_it_inventory.group_ceisa_export_user,equip3_manuf_it_inventory.group_ceisa_export_manager,equip3_manuf_it_inventory.group_ceisa_export_administrator"
                    attrs="{'invisible': ['|', ('state', 'not in', ['confirmed', 'assigned']), ('picking_type_code', '!=', 'outgoing')]}"
                />
                <button name="action_import_document" string="Import Document" type="object"
                    class="btn btn-secondary" groups="equip3_manuf_it_inventory.group_ceisa_import_user,equip3_manuf_it_inventory.group_ceisa_import_manager,equip3_manuf_it_inventory.group_ceisa_import_administrator"
                    attrs="{'invisible': ['|', ('state', 'not in', ['confirmed', 'assigned']), ('picking_type_code', '!=', 'incoming')]}"
                />
            </xpath>
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button name="action_view_export_document"
                        string="Export Documents"
                 type="object"
                 class="oe_stat_button order-11"
                 attrs="{'invisible': ['|', '&amp;', ('export_document_count', '=', 0), ('state', 'not in', ['confirmed', 'assigned']), ('picking_type_code', '!=', 'outgoing')]}"
                 icon="fa-mobile">
                    <field name="export_document_count" widget="statinfo" string="Export Document" invisible="1"/>
                </button>
            </xpath>
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button name="action_view_import_document"
                        string="Import Documents"
                 type="object"
                 class="oe_stat_button order-11"
                 attrs="{'invisible': ['|', '&amp;', ('import_document_count', '=', 0), ('state', 'not in', ['confirmed', 'assigned']), ('picking_type_code', '!=', 'incoming')]}"
                 icon="fa-mobile">
                    <field name="import_document_count" widget="statinfo" string="Import Document" invisible="1"/>
                </button>
            </xpath>
        </field>
    </record>

</odoo>