<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="ceisa_overseas_port_view_search" model="ir.ui.view">
		<field name="name">ceisa.overseas.port.search</field>
		<field name="model">ceisa.pabean.office</field>
		<field name="arch" type="xml">
			<search string="Overseas Port">
				<field name="name"/>
				<filter string="Country Code" name="country_code" domain="['|', ('country_code','=',False), ('country_code','!=','ID')]"/>
			</search>
		</field>
	</record>
	<record id="view_overseas_port_documents_tree" model="ir.ui.view">
		<field name="name">Overseas Port</field>
		<field name="model">ceisa.pabean.office</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Overseas Port" editable="bottom">
				<field name="code" required="1"/>
				<field name="name" required="1"/>
				<field name="country_code"/>
			</tree>
		</field>
	</record>
    <record id="action_overseas_port_master_data" model="ir.actions.act_window">
		<field name="name">Pelabuhan Luar Negeri</field>
		<field name="res_model">ceisa.pabean.office</field>
		<field name="view_mode">tree,form</field>
		<field name="search_view_id" ref="ceisa_overseas_port_view_search"/>
		<field name="view_id" eval="False"/>
		<field name="domain">['|', ('country_code','=',False), ('country_code', '!=', 'ID')]</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
			Create a new Overseas Port datas
			</p><p>
			Notes: All the datas must be syncronize with beacukai data...
			</p>
		</field>
	</record>
</odoo>