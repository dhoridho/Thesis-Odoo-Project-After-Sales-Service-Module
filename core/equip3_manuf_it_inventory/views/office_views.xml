<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="ceisa_beacukai_office_view_search" model="ir.ui.view">
		<field name="name">ceisa.beacukai.office.search</field>
		<field name="model">ceisa.beacukai.office</field>
		<field name="arch" type="xml">
			<search string="Beacukai Office">
				<field name="name"/>
			</search>
		</field>
	</record>
	<record id="view_beacukai_office_documents_tree" model="ir.ui.view">
		<field name="name">Office Locations</field>
		<field name="model">ceisa.beacukai.office</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Beacukai Office" editable="bottom">
				<field name="code" required="1"/>
				<field name="name" required="1"/>
			</tree>
		</field>
	</record>
    <record id="action_office_master_data" model="ir.actions.act_window">
		<field name="name">Kantor Beacukai</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">ceisa.beacukai.office</field>
		<field name="view_mode">tree,form</field>
		<field name="search_view_id" ref="ceisa_beacukai_office_view_search"/>
		<field name="view_id" eval="False"/>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
			Create a new office locations
			</p><p>
			All the datas must be syncronize with beacukai data...
			</p>
		</field>
	</record>
</odoo>