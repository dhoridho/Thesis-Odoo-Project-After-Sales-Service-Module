<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="ceisa_beacukai_entitas_type_view_search" model="ir.ui.view">
		<field name="name">ceisa.beacukai.entitas.type.search</field>
		<field name="model">ceisa.entitas.type</field>
		<field name="arch" type="xml">
			<search string="Entitas Type">
				<field name="name"/>
			</search>
		</field>
	</record>
	<record id="view_beacukai_entitas_type_documents_tree" model="ir.ui.view">
		<field name="name">ceisa.beacukai.entitas.type.tree</field>
		<field name="model">ceisa.entitas.type</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Entitas Type" editable="bottom">
				<field name="code" required="1"/>
				<field name="name" required="1"/>
			</tree>
		</field>
	</record>
    <record id="action_entitas_type_master_data" model="ir.actions.act_window">
		<field name="name">Jenis Entitas</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">ceisa.entitas.type</field>
		<field name="view_mode">tree,form</field>
		<field name="search_view_id" ref="equip3_manuf_it_inventory.ceisa_beacukai_entitas_type_view_search"/>
		<field name="view_id" eval="False"/>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
			Create a new Entitas Type
			</p><p>
			All the datas must be syncronize with beacukai reference data...
			</p>
		</field>
	</record>
</odoo>