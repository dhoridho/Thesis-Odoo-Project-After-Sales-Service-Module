<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="ceisa_beacukai_facilities_fee_view_search" model="ir.ui.view">
		<field name="name">ceisa.beacukai.facilities.fee.search</field>
		<field name="model">ceisa.facilities.fee</field>
		<field name="arch" type="xml">
			<search string="Facility Fee">
				<field name="name"/>
			</search>
		</field>
	</record>
	<record id="view_beacukai_facilities_fee_documents_tree" model="ir.ui.view">
		<field name="name">ceisa.beacukai.facilities.fee.tree</field>
		<field name="model">ceisa.facilities.fee</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Facility Fee" editable="bottom">
				<field name="code" required="1"/>
				<field name="name" required="1"/>
			</tree>
		</field>
	</record>
    <record id="action_facilities_fee_master_data" model="ir.actions.act_window">
		<field name="name">Biaya Fasilitas</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">ceisa.facilities.fee</field>
		<field name="view_mode">tree,form</field>
		<field name="search_view_id" ref="equip3_manuf_it_inventory.ceisa_beacukai_facilities_fee_view_search"/>
		<field name="view_id" eval="False"/>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
			Create a new Facility Fee
			</p><p>
			All the datas must be syncronize with beacukai reference data...
			</p>
		</field>
	</record>
</odoo>