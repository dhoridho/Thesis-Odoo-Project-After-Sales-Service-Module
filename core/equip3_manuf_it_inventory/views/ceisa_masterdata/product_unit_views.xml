<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="ceisa_beacukai_product_unit_view_search" model="ir.ui.view">
		<field name="name">ceisa.beacukai.product.unit.search</field>
		<field name="model">ceisa.product.unit</field>
		<field name="arch" type="xml">
			<search string="Product Unit">
				<field name="name"/>
			</search>
		</field>
	</record>
	<record id="view_beacukai_product_unit_documents_tree" model="ir.ui.view">
		<field name="name">ceisa.beacukai.product.unit.tree</field>
		<field name="model">ceisa.product.unit</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Product Unit" editable="bottom">
				<field name="code" required="1"/>
				<field name="name" required="1"/>
			</tree>
		</field>
	</record>
    <record id="action_product_unit_master_data" model="ir.actions.act_window">
		<field name="name">Unit Produk</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">ceisa.product.unit</field>
		<field name="view_mode">tree,form</field>
		<field name="search_view_id" ref="equip3_manuf_it_inventory.ceisa_beacukai_product_unit_view_search"/>
		<field name="view_id" eval="False"/>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
			Create a new Product Unit
			</p><p>
			All the datas must be syncronize with beacukai reference data...
			</p>
		</field>
	</record>
</odoo>