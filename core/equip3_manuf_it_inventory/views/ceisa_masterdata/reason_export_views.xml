<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="ceisa_beacukai_reason_export_view_search" model="ir.ui.view">
		<field name="name">ceisa.beacukai.reason.export.search</field>
		<field name="model">ceisa.reason.export</field>
		<field name="arch" type="xml">
			<search string="Export Reason">
				<field name="name"/>
			</search>
		</field>
	</record>
	<record id="view_beacukai_reason_export_documents_tree" model="ir.ui.view">
		<field name="name">ceisa.beacukai.reason.export.tree</field>
		<field name="model">ceisa.reason.export</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Export Reason" editable="bottom">
				<field name="document_code_id"/>
				<field name="code" required="1"/>
				<field name="name" required="1"/>
			</tree>
		</field>
	</record>
    <record id="action_reason_export_master_data" model="ir.actions.act_window">
		<field name="name">Alasan Ekspor</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">ceisa.reason.export</field>
		<field name="view_mode">tree,form</field>
		<field name="search_view_id" ref="equip3_manuf_it_inventory.ceisa_beacukai_reason_export_view_search"/>
		<field name="view_id" eval="False"/>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
			Create a new Export Reason
			</p><p>
			All the datas must be syncronize with beacukai reference data...
			</p>
		</field>
	</record>
</odoo>