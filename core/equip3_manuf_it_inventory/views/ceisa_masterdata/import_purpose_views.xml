<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="ceisa_beacukai_import_purpose_view_search" model="ir.ui.view">
		<field name="name">ceisa.beacukai.import.purpose.search</field>
		<field name="model">ceisa.import.purpose</field>
		<field name="arch" type="xml">
			<search string="Import Purpose">
				<field name="name"/>
			</search>
		</field>
	</record>
	<record id="view_beacukai_import_purpose_documents_tree" model="ir.ui.view">
		<field name="name">ceisa.beacukai.import.purpose.tree</field>
		<field name="model">ceisa.import.purpose</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Import Purpose" editable="bottom">
				<field name="code" required="1"/>
				<field name="name" required="1"/>
			</tree>
		</field>
	</record>
    <record id="action_import_purpose_master_data" model="ir.actions.act_window">
		<field name="name">Tujuan Impor</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">ceisa.import.purpose</field>
		<field name="view_mode">tree,form</field>
		<field name="search_view_id" ref="equip3_manuf_it_inventory.ceisa_beacukai_import_purpose_view_search"/>
		<field name="view_id" eval="False"/>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
			Create a new Import Purpose
			</p><p>
			All the datas must be syncronize with beacukai reference data...
			</p>
		</field>
	</record>
</odoo>