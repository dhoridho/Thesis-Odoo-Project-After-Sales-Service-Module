<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="form_ceisa_documents_bc40_views" model="ir.ui.view">
        <field name="name">Documents TPB BC4.0 Form View</field>
        <field name="model">ceisa.documents.bc40</field>
        <field name="arch" type="xml">
            <form string="Documents TPB - BC4.0" nocreate="1" create="false">
                <sheet>
                    <widget name="web_ribbon" title="Sent" attrs="{'invisible': [('sent_state', '=', False)]}"/>
                    <div class="oe_title">
                        <label class="oe_edit_only" for="name"/>
                        <h1>
                            <field name="name" placeholder="Document Name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sent_state" invisible="1"/>
                            <field name="document_type_id" invisible="1" default="40"/>
                            <label for="internal_transfer_id" string="Transfer Request"/>
                            <div class="o_row" name="internal_transfer_id">
                                <field name="internal_transfer_id" required="1"/>
                            </div>
                            <label for="no_aju"/>
                            <div class="o_row" name="no_aju">
                                <field name="no_aju"/>
                                <field name="aju_date"/>
                            </div>
                            <label for="nik"/>
                            <div class="o_row" name="nik">
                                <field name="nik"/>
                            </div>
                            <label for="origin_beacukai_office"/>
                            <div class="o_row" name="origin_beacukai_office">
                                <field name="origin_beacukai_office" options="{'no_create': True}"/>
                            </div>
                            <label for="origin_pabean_export_office"/>
                            <div class="o_row" name="origin_pabean_export_office">
                                <field name="origin_pabean_export_office" options="{'no_create': True}"/>
                            </div>
                            <label for="destination_port_office"/>
                            <div class="o_row" name="destination_port_office">
                                <field name="destination_port_office" options="{'no_create': True}"/>
                            </div>
                            <label for="destination_pabean_office"/>
                            <div class="o_row" name="destination_pabean_office">
                                <field name="destination_pabean_office"/>
                            </div>
                        </group>
                        <group>
                            <label for="procedure_type_id"/>
                            <div class="o_row" name="procedure_type_id">
                                <field name="procedure_type_id"/>
                            </div>
                            <label for="import_type"/>
                            <div class="o_row" name="import_type">
                                <field name="import_type" options="{'no_create': True}"/>
                            </div>
                            <label for="payment_term"/>
                            <div class="o_row" name="payment_term">
                                <field name="payment_term"/>
                            </div>
                            <label for="tpb_type_id"/>
                            <div class="o_row" name="tpb_type_id">
                                <field name="tpb_type_id"/>
                            </div>
                            <label for="disclaimer"/>
                            <div class="o_row" name="disclaimer">
                                <field name="disclaimer"/>
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page name="entitas_information" string="Entitas">
                            <group>
                               <group string="Pengusaha" name="exim_information" priority="5">
                                    <label for="exim_identity_type" string="Jenis Identitas"/>
                                    <div class="o_row" name="exim_identity_type">
                                        <field name="exim_identity_type" options="{'no_create': True}"/>
                                        <field name="exim_identity_number"/>
                                    </div>
<!--                                   <field name="exim_code_api" />-->
<!--                                   <field name="exim_status_code" options="{'no_create': True}"/>-->
                                    <field name="exim_partner_id" string="Nama Partner" options="{'no_create': True}"/>
                                   <field name="exim_nib_entitas" string="NIB Entitas"/>
                                   <label for="exim_permit_number" string="Nomor Izin"/>
                                    <div class="o_row" name="exim_permit_number">
                                        <field name="exim_permit_number"/>
                                        <field name="exim_permit_date" />
                                    </div>
                                    <field name="exim_address" string="Alamat"/>
                                    <field name="exim_country" string="Kode Negara"/>
                                </group>
                                <group string="Pemilik" name="owner_entitas_information" priority="5">
                                    <label for="owner_identity_type" string="Jenis Identitas"/>
                                    <div class="o_row" name="owner_identity_type">
                                        <field name="owner_identity_type" options="{'no_create': True}"/>
                                        <field name="owner_identity_number"/>
                                    </div>
                                    <field name="owner_code_api" string="Jenis API"/>
                                    <field name="owner_status_code" string="Kode Status" options="{'no_create': True}"/>
                                    <field name="owner_partner_id" string="Nama Partner" options="{'no_create': True}"/>
                                    <field name="owner_nib_entitas" string="NIB Entitas"/>
                                    <field name="owner_address" string="Alamat"/>
                                    <field name="owner_country" string="Kode Negara"/>
                                </group>
                                <group string="Pengirim" name="sender_entitas_information" priority="5">
                                    <label for="sender_identity_type" string="Jenis Identitas"/>
                                    <div class="o_row" name="sender_identity_type">
                                        <field name="sender_identity_type" options="{'no_create': True}"/>
                                        <field name="sender_identity_number"/>
                                    </div>
                                    <field name="sender_code_api" string="Jenis API"/>
                                    <field name="sender_status_code" string="Kode Status" options="{'no_create': True}"/>
                                    <field name="sender_partner_id" string="Nama Partner" options="{'no_create': True}"/>
                                    <field name="sender_nib_entitas" string="NIB Entitas"/>
                                    <field name="sender_address" string="Alamat"/>
                                    <field name="sender_country" string="Kode Negara"/>
                                </group>
                            </group>
                            <field name="entitas_line_id">
                                <tree string="Entitas Information" editable="bottom">
                                    <field name="code" required="True" domain="[('code', '&gt;', '2')]"/>
                                    <field name="identity_type" attrs="{'required': [('code','in',['4', '7', '11'])]}"/>
                                    <field name="number" attrs="{'required': [('code','in',['4', '7', '11'])]}"/>
                                    <field name="name" required="True" />
                                    <field name="address" required="True"/>
                                    <field name="country_id" required="True"/>
<!--                                    <field name="exim_codeapi" required="True" />-->
                                </tree>
                            </field>
                        </page>
                        <page name="document" string="Document">
                            <group>
                                <field name="document_line_id">
                                    <tree string="Dokumen Lampiran" editable="bottom">
                                        <field name="type"/>
                                        <field name="number"/>
                                        <field name="doc_date"/>
                                        <field name="facility"/>
                                        <field name="izin"/>
                                        <field name="office"/>
                                        <field name="file"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page name="pengangkut" string="Pengangkut">
                            <group>
                                <group name="bc11_close_pu">
                                    <field name="close_pu" options="{'no_create': True}"/>
                                    <field name="no_bc11"/>
                                    <field name="bc11_date"/>
                                    <field name="bc11_pos"/>
                                    <field name="bc11_subpos"/>
                                </group>
                                <group name="penimbunan">
                                    <field name="transport_type_id" options="{'no_create': True}"/>
                                    <label for="storehouse_location"/>
                                    <div name="storehouse_location" class="o_row">
                                        <field name="storehouse_location" options="{'no_create': True}" />
                                    </div>
                                    <label for="origin_port_office"/>
                                    <div name="origin_port_office" class="o_row">
                                        <field name="origin_port_office" options="{'no_create': True}"/>
                                    </div>
                                    <label for="destination_unloading_port"/>
                                    <div name="destination_unloading_port" class="o_row">
                                        <field name="destination_unloading_port" options="{'no_create': True}"/>
                                    </div>
                                    <field name="destination_port_office"/>
                                    <field name="exim_country"/>
                                    <field name="exim_date_estimation" string="Perkiraan Tanggal Tiba"/>
                                </group>
<!--                                    <group name="pemeriksaan">-->
<!--                                        <field name="inspection_location"/>-->
<!--                                        <field name="inspection_date"/>-->
<!--                                        <field name="inspection_office"/>-->
<!--                                    </group>-->
                            </group>
                            <field name="transportation_line_id">
                                <tree string="Sarana Angkut" editable="bottom">
                                    <field name="name"/>
                                    <field name="number"/>
                                    <field name="transport_type"/>
                                    <field name="country_id"/>
                                </tree>
                            </field>
                        </page>
                        <page name="kemasan_peti_kemas" string="Kemasan dan Peti Kemas">
                            <group>
                                <group name="kemasan">
                                    <field name="package_line_id">
                                        <tree string="Kemasan" editable="bottom">
                                            <field name="value"/>
                                            <field name="package_id"/>
                                            <field name="merek"/>
                                        </tree>
                                    </field>
                                </group>
                                <group name="petikemas">
                                    <field name="container_line_id">
                                        <tree string="Peti Kemas" editable="bottom">
                                            <field name="number"/>
                                            <field name="size"/>
                                            <field name="category"/>
                                            <field name="type"/>
                                        </tree>
                                    </field>
                                </group>
                            </group>
                        </page>
                        <page name="transaction" string="Transaksi">
                            <group>
                                <group name="transaction_information">
                                    <field name="valuta_id" />
                                    <label for="ndpbm"/>
                                    <div name="ndpbm" class="o_row">
                                        <field name="ndpbm" default="1.00"/>
                                    </div>
                                    <field name="trade_transaction_type" options="{'no_create': True}"/>
                                    <field name="trade_purpose" options="{'no_create': True}"/>
                                    <label for="cara_penyerahan" string="Harga Barang"/>
                                    <div name="cara_penyerahan" class="o_row">
                                        <field name="cara_penyerahan"/>
                                        <field name="incoterm_value"/>
                                    </div>
                                    <field name="cif_value"/>
                                </group>
                                <group name="transaction_information_right">
                                    <field name="additional_cost" />
                                    <field name="deduction_cost"/>
                                    <field name="freight"/>
                                    <label for="insurance_type"/>
                                    <div name="insurance_type" class="o_row">
                                        <field name="insurance_type"/>
                                        <field name="insurance_value"/>
                                    </div>
                                    <label for="valuntary_flag"/>
                                    <div name="valuntary_flag" class="o_row">
                                        <field name="valuntary_flag"/>
                                        <field name="valuntary_value"/>
                                    </div>
                                </group>
                                <group name="weight_information">
                                    <field name="volume"/>
                                </group>
                            </group>
                        </page>
                        <page string="barang" name="Barang">
                            <button name="action_add_new_product" string="Add Product" class="oe_highlight" type="object"/>
                            <group name="product_information">
                                <field name="product_line_ids" mode="tree" options="{'reload_whole_on_button': true}">
                                    <tree string="Barang" create="0" no_create_edit="1" delete="1" edit="false">
                                        <field name="product_hs"/>
                                        <field name="product_id"/>
                                        <field name="fob_price" default="0.01"/>
                                        <field name="product_qty"/>
                                        <field name="product_uom"/>
                                    </tree>
                                    <form string="Add New Products" create="false">
                                        <group>
                                            <group>
                                                <field name="product_hs"/>
                                                <field name="code"/>
                                                <field name="product_id"/>
                                                <field name="name"/>
                                                <field name="merk"/>
                                                <field name="product_type"/>
                                                <field name="product_size"/>
                                                <field name="origin_country"/>
                                                <field name="origin_city"/>
                                            </group>
                                            <group>
                                                <field name="product_qty"/>
                                                <field name="product_uom"/>
                                                <field name="package_qty"/>
                                                <field name="package_type"/>
                                                <field name="fob_price" default="0.01"/>
                                                <field name="volume" default="0.01"/>
                                                <field name="netto_weight" default="0.01"/>
                                                <field name="fob_uom_price" default="0.01"/>
                                            </group>
                                        </group>
                                        <field name="export_document_line_id">
                                            <tree string="Dokumen Lampiran" editable="bottom">
                                                <field name="type"/>
                                                <field name="number"/>
                                                <field name="doc_date"/>
                                                <field name="facility"/>
                                                <field name="izin"/>
                                                <field name="office"/>
                                                <field name="file"/>
                                            </tree>
                                        </field>
                                    </form>
                                </field>
                            </group>
                        </page>
                        <page string="pungutan" name="Pungutan">
                            <group>
                                <field name="tax_line_id">
                                    <tree string="Pungutan" editable="bottom">
                                        <field name="tax_type"/>
                                        <field name="tax_facilities_fee"/>
                                        <field name="tax_value"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="pernyataan" name="Pernyataan">
                            <group>
                                <group name="dateplace">
                                    <field name="place_statement"/>
                                    <field name="date_statement"/>
                                </group>
                                <group name="jobname">
                                    <field name="name_statement"/>
                                    <field name="job_statement"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="ceisa_documents_bc40_view_search" model="ir.ui.view">
        <field name="name">ceisa.documents.bc40.search</field>
        <field name="model">ceisa.documents.bc40</field>
        <field name="arch" type="xml">
            <search string="BC4.0">
                <field name="name"/>
                <filter string="Type" name="type" domain="[('type','=','bc40')]"/>
            </search>
        </field>
    </record>
    <record id="view_ceisa_documents_bc40_tree" model="ir.ui.view">
        <field name="name">Documents TPB BC4.0 Tree View</field>
        <field name="model">ceisa.documents.bc40</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Documents TPB - BC4.0">
                <field name="name"/>
                <field name="no_aju"/>
                <field name="aju_date"/>
                <field name="procedure_type_id"/>
                <field name="import_type"/>
                <field name="origin_beacukai_office"/>
            </tree>
        </field>
    </record>
    <record id="action_documents_bc40_view" model="ir.actions.act_window">
        <field name="name">Document TPB - BC4.0</field>
        <field name="res_model">ceisa.documents.bc40</field>
        <field name="view_mode">form</field>
<!--        <field name="domain">[('type', '=', 'bc40')]</field>-->
        <field name="context">{'default_picking_id': active_id, 'default_internal_transfer_id': active_id}</field>
        <field name="view_id" ref="equip3_manuf_it_inventory.form_ceisa_documents_bc40_views" />
    </record>
    <record id="action_documents_bc40_mainview" model="ir.actions.act_window">
        <field name="name">Document TPB - BC4.0</field>
        <field name="res_model">ceisa.documents.bc40</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="equip3_manuf_it_inventory.ceisa_documents_bc40_view_search"/>
<!--        <field name="domain">[('type', '=', 'bc40')]</field>-->
        <field name="view_id" eval="False"/> <!-- Force empty -->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new documents TPB - BC4.0
            </p>
        </field>
    </record>
</odoo>