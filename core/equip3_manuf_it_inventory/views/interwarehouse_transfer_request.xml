<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="view_internal_transfer_ceisa_exim_document" model="ir.ui.view">
        <field name="name">view.internal.transfer.ceisa.exim.document.inherited</field>
        <field name="model">internal.transfer</field>
        <field name="inherit_id" ref="equip3_inventory_operation.view_form_internal_transfer"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_internal_transfer_documents" string="Create IT Inventory Document" type="object"
                    class="btn btn-secondary" groups="equip3_manuf_it_inventory.group_ceisa_transfer_user,equip3_manuf_it_inventory.group_ceisa_transfer_manager,equip3_manuf_it_inventory.group_ceisa_transfer_administrator"
                />
            </xpath>
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button name="action_view_transfer_out_document"
                        string="TPB Out"
                 type="object"
                 class="oe_stat_button"
                 attrs="{'invisible': [('transfer_out_count', '=', 0)]}"
                 icon="o-hm-smart-all-documents">
                    <field name="transfer_out_count" widget="statinfo" string="TPB Out" invisible="1"/>
                </button>
                <button name="action_view_transfer_in_document"
                        string="TPB In"
                 type="object"
                 class="oe_stat_button"
                 attrs="{'invisible': [('transfer_in_count', '=', 0)]}"
                 icon="o-hm-smart-all-documents">
                    <field name="transfer_in_count" widget="statinfo" string="TPB In" invisible="1"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
