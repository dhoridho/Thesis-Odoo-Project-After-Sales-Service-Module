<templates>
    
    <t t-name="ItListViewReport.buttons">
        <div class="o_list_buttons" role="toolbar" aria-label="Main actions">
            <button type="button" class="btn btn-primary o_list_print_pdf">
                <i class="fa fa-fw o_button_icon fa-file-pdf-o"/>
                <span>Print PDF</span>
            </button>
            <button type="button" class="btn btn-primary o_list_print_xlsx">
                <i class="fa fa-fw o_button_icon fa-file-excel-o"/>
                <span>Print XLSX</span>
            </button>
        </div>
    </t>

    <t t-name="ItFilters">
        <div class="o_cp_it_inventory">
            <div class="o_date_filter">
                <span class="o_date_filter_container">
                    <span class="o_date_filter_label"><b>Date</b></span>
                    <span class="o_date_filter_from"></span>
                    <span class="o_date_filter_to"></span>
                </span>
            </div>
            <div class="o_warehouse_filter">
                <span class="o_warehouse_container">
                    <span class="o_warehouse_label"><b>Warehouse</b></span>
                    <span class="o_warehouse_input">
                        <select class="o_warehouse_select o_input o_field_widget">
                            <t t-foreach="warehouseIds" t-as="warehouse">
                                <t t-if="warehouseId.id == warehouse.id">
                                    <option t-att-value="warehouse.id" selected="selected"><t t-esc="warehouse.name"/></option>
                                </t>
                                <t t-else="">
                                    <option t-att-value="warehouse.id"><t t-esc="warehouse.name"/></option>
                                </t>
                            </t>
                        </select>
                    </span>
                </span>
            </div>
        </div>
   </t>

   <t t-name="ItFiltersDocument">
        <div class="o_document_filter">
            <span class="o_document_container">
                <span class="o_document_label"><b>Document Type</b></span>
                <span class="o_document_input">
                    <select class="o_document_select o_input o_field_widget">
                        <t t-foreach="documentIds" t-as="document">
                            <t t-if="documentId.id == document.id">
                                <option t-att-value="document.id" selected="selected"><t t-esc="document.name"/></option>
                            </t>
                            <t t-else="">
                                <option t-att-value="document.id"><t t-esc="document.name"/></option>
                            </t>
                        </t>
                    </select>
                </span>
            </span>
        </div>
    </t>
</templates>
