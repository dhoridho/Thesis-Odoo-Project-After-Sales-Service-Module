<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        
        <template id="it_inventory_list_report_document">
            <t t-call="equip3_manuf_it_inventory.it_external_layout">
                <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color"/>
                <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color"/>
                <t t-set="company_color" t-value="o.company_id and o.company_id.company_color"/>
                <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color"/>
                <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color"/>
                <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color"/>
                <t t-set="text_color" t-value="o.company_id and o.company_id.text_color"/>

				<div class="page" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
					<div class="oe_structure"/>
                    <t t-call="general_template.template_watermark"/>
                    <div border="0" cellpadding="0" cellspacing="0" style="padding:0px 20px 20px 20px; margin:0; background:#fff; line-height:20px;" width="100%">
                        <div>
                            <p t-attf-style="padding:20px 0px 0px 0px; height:5px; border-bottom: 1px solid #{theme_color or '#000000'};"/>
                        </div>
                        <div>
                            <div align="left" colspan="4" style="padding:10px 0px;" valign="top">
                                <table border="0" cellpadding="0" cellspacing="0" t-attf-style="color:#fff; text-transform:capitalize; border: 1px solid #{theme_color or '#000000'};" width="100%">
                                    <colgroup>
                                        <col style="width:33.33%"/>
                                        <col style="width:33.33%"/>
                                        <col style="width:33.33%"/>
                                    </colgroup>
                                    <tbody>
                                        <tr t-attf-style="color: #{theme_text_color or '#000000'}; background-color: #{theme_color or '#000000'};">
                                            <td t-attf-style="padding:5px 15px; font-weight:bold; text-align: center;">
                                                <span class="text-center">Report Type:</span>
                                                <br/>
                                                <span t-esc="report_name"/>
                                            </td>
                                            <td t-attf-style="padding:5px 15px; font-weight:bold; text-align: center;">
                                                <span class="text-center">Periode:</span>
                                                <br/>
                                                <t t-if="filters.get('date_from')">
                                                    From <span t-esc="filters['date_from']" t-options="{'widget': 'date', 'format': 'dd/MM/yyyy'}"/>
                                                </t>
                                                <t t-if="filters.get('date_to')">
                                                    To <span t-esc="filters['date_to']" t-options="{'widget': 'date', 'format': 'dd/MM/yyyy'}"/>
                                                </t>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div align="left" style="padding:20px 0px 0 0; font-weight:bold; width:100%;" valign="top">
                            <table BORDERCOLOR="#{theme_color or '#000000'}" border="1" cellpadding="0" cellspacing="0" class="table table-bordered" style="border:0.5px solid #ccc;  border-collapse: collapse; text-transform:capitalize; padding:15px;border-bottom:1px solid #ccc;" width="100%">
                                <thead>
                                    <t t-if="report_name in ['Laporan Pemasukan Barang', 'Laporan Pengeluaran Barang']">
                                        <tr t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'};">
                                            <td t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">
                                            </td>
                                            <td t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold; text-align:center;" colspan="3">
                                                <t t-if="report_name == 'Laporan Pemasukan Barang'">
                                                    Dokumen Pemasukan Barang
                                                </t>
                                                <t t-if="report_name == 'Laporan Pengeluaran Barang'">
                                                    Dokumen Pengeluaran Barang
                                                </t>
                                            </td>
                                            <td t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold; text-align:center;" colspan="2" width="20%;">
                                                <t t-if="report_name == 'Laporan Pemasukan Barang'">
                                                    Bukti Penerimaan Barang / Good Receive Note / Dok. Lain Yang Sejenisnya
                                                </t>
                                                <t t-if="report_name == 'Laporan Pengeluaran Barang'">
                                                    Bukti Pengeluaran Barang / Delivery Order / Dok. Lain Yang Sejenisnya
                                                </t>
                                            </td>
                                            <td t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">
                                            </td>
                                            <t t-if="report_name != 'Laporan Stock Opname'">
                                                <td t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">
                                                </td>
                                                <td t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">
                                                </td>
                                                <td t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">
                                                </td>
                                                <td t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">
                                                </td>
                                                <td t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;">
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                    <tr t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'};">
                                        <t t-foreach="header" t-as="head">
                                            <td t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;"><t t-esc="head_value['label']"/></td>
                                        </t>
                                    </tr>
                                </thead>
                                <tbody class="it_inventory_tbody">
                                    <t t-foreach="lines" t-as="line">
                                        <t t-if="line_odd">
                                            <t t-set="ol_color" t-value="o.company_id.even_party_color"/>
                                        </t>
                                        <t t-if="line_even">
                                            <t t-set="ol_color" t-value="o.company_id.odd_party_color"/>
                                        </t>

                                        <t t-set="tr_class" t-value="''"/>
                                        <t t-if="line['type'] == 'total'">
                                            <t t-set="tr_class" t-value="'o_total'"/>
                                        </t>
                                        <tr t-att-class="tr_class" t-att-style="'page-break-inside: avoid !important; color: %s; background-color: %s '%(text_color, ol_color)  ">
                                            <t t-foreach="header" t-as="head">
                                                <t t-set="td_class" t-value="''"/>
                                                <t t-set="td_value" t-value="line[head]"/>
        
                                                <t t-if="head_value['type'] in ['float', 'integer', 'monetary']">
                                                    <t t-if="head == 'sequence'">
                                                        <t t-set="td_class" t-value="'text-center'"/>
                                                    </t>
                                                    <t t-else="">
                                                        <t t-set="td_class" t-value="'text-right'"/>
                                                    </t>
                                                    <t t-if="head_value['type'] == 'float'">
                                                        <t t-set="td_value" t-value="'{0:,.2f}'.format(td_value)"/>
                                                    </t>
                                                </t>
        
                                                <t t-if="head_value['type'] != 'monetary'">
                                                    <td t-att-class="td_class" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'"><t t-esc="td_value"/></td>
                                                </t>
                                                <t t-else="">
                                                    <td t-att-class="td_class" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'"><t t-esc="td_value" t-options="{'widget': 'monetary', 'display_currency': currency_id}"/></td>
                                                </t>
                                            </t> 
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>

                        <br/><br/>
                        <div class="text-right">
                            <strong>
                                <p>WE ARE RESPONSIBLE</p>
                                <p>FOR THE ACCURACY OF THIS REPORT</p>
                                <p><span t-if="filters.get('warehouse')" t-esc="filters['warehouse']['city']" style="text-transform: uppercase;"/>, <t t-esc="datetime.date.today()" t-options="{'widget': 'date', 'format': 'dd/MM/yyyy'}"/></p>
                                <br/><br/>
                                <p>USER</p>
                            </strong>
                        </div>
                    </div>
                    <div class="oe_structure"/>
                </div>
            </t>
        </template>

        <template id="it_inventory_list_report">
			<t t-call="web.html_container">
                <t t-set="company_id" t-value="res_company"/>
                <t t-set="currency_id" t-value="company_id.currency_id"/>
                <t t-call="equip3_manuf_it_inventory.it_inventory_list_report_document"/>
			</t>
		</template>

    </data>
</odoo>