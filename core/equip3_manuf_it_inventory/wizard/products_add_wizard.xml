<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ceisa_add_product_wizard_form" model="ir.ui.view">
        <field name="name">ceisa.products.wizard.form</field>
        <field name="model">ceisa.products.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Product" role="form">
                <group>
                    <group>
                        <field name="product_hs"/>
                        <field name="code"/>
                        <field name="product_id"/>
                        <field name="name"/>
                        <field name="merk"/>
                        <field name="product_type"/>
                        <field name="product_size"/>
                        <field name="origin_country"/>
                        <field name="origin_city"/>
                    </group>
                    <group>
                        <field name="product_qty"/>
                        <field name="product_uom"/>
                        <field name="package_qty"/>
                        <field name="package_type"/>
                        <field name="fob_price"/>
                        <field name="volume"/>
                        <field name="netto_weight"/>
                        <field name="fob_uom_price"/>
                    </group>
                </group>
                <field name="document_line_id">
                    <tree string="Dokumen Lampiran" editable="bottom">
                        <field name="type"/>
                        <field name="number"/>
                        <field name="doc_date"/>
                        <field name="facility"/>
                        <field name="izin"/>
                        <field name="office"/>
                        <field name="file"/>
                    </tree>
                </field>
                <footer>
                    <button string="Submit" name="submit_products_wizard" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_highlight" special="cancel"/>
                </footer>
           </form>
        </field>
    </record>
</odoo>