<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="career_transition_category_form" model="ir.ui.view">
            <field name="name">career.transition.category.form</field>
            <field name="model">career.transition.category</field>
            <field name="arch" type="xml">
                <form string="Employee Disciplinary">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="group_ids" required="1" widget="many2many_tags" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                <field name="create_date" />
                                <field name="create_uid" />
                            </group>                           
                        </group>
                    
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="career_transition_category_view" model="ir.ui.view">
            <field name="name">career.transition.category.tree</field>
            <field name="model">career.transition.category</field>
            <field name="arch" type="xml">
                <tree string="Carrer Transition Category">
                    <field name="name"/>
                    <field name="create_date"/>
                    <field name="create_uid"/>
                </tree>
            </field>
        </record>

        <record id="career_transition_type_search_view" model="ir.ui.view">
            <field name="name">career.transition.category.search</field>
            <field name="model">career.transition.category</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="career_transition_category_act_window" model="ir.actions.act_window">
            <field name="name">Career Transition Category</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">career.transition.category</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Career Transition Category.
                </p>
            </field>
        </record>

        

    
        <menuitem name="Career Transition Category" id="hr_career_transition_menu_category" parent="hr_career_transition_configuration_menu_root" action="career_transition_category_act_window" sequence="2"/>

    </data>
</odoo>