<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    

        <record id="action_career_transition_view_pivot" model="ir.actions.act_window">   
               <field name="name">Career Transition Analysis</field>      
               <field name="res_model">hr.career.transition</field>     
                <field name="view_mode">pivot,graph</field>      
                <field name="domain">[('status','=','approve')]</field>   
                   <field name="help" type="html">     
                 <p class="oe_view_nocontent_create">no career transition data     

                 </p>      
                </field>  
            </record>


            <record id="view_pivot" model="ir.ui.view">  
                <field name="name">Career Transition Type Pivot</field>  
                <field name="model">hr.career.transition</field>
                <field name="arch" type="xml">     
                 <pivot string="Pivot View">           
                     <field name="career_transition_type" type="row"/>      
                     <field name="transition_date" type="col"/>      
                    </pivot>   
                </field>
            </record>

        
            

        <menuitem name="Reporting" id="menu_report_career"  parent="hr_career_transition_menu_root" sequence="11" />
        <menuitem name="Career Transition Analysis" id="menu_report_career_pivot"  parent="menu_report_career" action="action_career_transition_view_pivot"  groups="equip3_hr_career_transition.career_transition_administrator"/>
        
    
        <record id="action_career_transition_view_graph" model="ir.actions.act_window">   
            <field name="name">View Graph</field>      
            <field name="res_model">hr.career.transition</field>     
             <field name="view_mode">graph</field>      
             <field name="domain">[('status','=','approve')]</field>   
                <field name="help" type="html">     
              <p class="oe_view_nocontent_create">         

              </p>      
             </field>  
         </record>


         <record id="view_graph_career_transition_type" model="ir.ui.view">  
             <field name="name">Career Transition Type Graph</field>  
             <field name="model">hr.career.transition</field>  
             <field name="arch" type="xml">     
              <graph string="Graph View">           
                  <field name="career_transition_type" type="row"/>      
                  <field name="transition_date" type="col"/>      
                 </graph>   
             </field>
         </record>

         <!-- <menuitem name="Career Transition Analysis Graph" id="menu_report_career_graph"  parent="menu_report_career" action="action_career_transition_view_graph"  /> -->


    </data>
    



</odoo>
