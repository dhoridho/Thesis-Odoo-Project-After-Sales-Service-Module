<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_career_transition_form_view" model="ir.ui.view">
            <field name="name">hr.career.transition.form</field>
            <field name="model">hr.career.transition</field>
            <field name="arch" type="xml">
                <form string="Career Transition">
                    <header>
                        <field name="status" widget="statusbar"/>
                         <button string="Confirm" name="set_confirm" type="object"  class="btn-primary" attrs="{'invisible':[('is_hide_confirm','=',True)]}"/>
                         <button string="Renew Contract" name="renew_contract" type="object"  class="btn-primary" attrs="{'invisible':[('is_hide_renew','=',True)]}"/>
                         <button string="Send Email" name="career_transition_letter_mail" type="object" class="btn-primary" attrs="{'invisible':[('status','!=','approve')]}"/>

                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="is_hide_confirm" invisible="1"/>
                                <field name="is_hide_approve" invisible="1"/>
                                <field name="is_hide_reject" invisible="1"/>
                                <field name="is_hide_renew" invisible="1"/>
                                <field name="number"  readonly="1" force_save="1" />
                                <field name="employee_id" required="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}" attrs="{'readonly':['|',('is_readonly_employee','=',True),('status','in',['to_approve','approve','rejected'])]}"/>
                                <field name="is_readonly_employee" invisible="1"/>
                                <field name="transition_type_name" invisible="1"/>
                                <field name="career_transition" required="1" invisible="1"/>
                                <field name="transition_category_domain_ids" widget="many2many_tags" invisible="1"/>
                                <field name="transition_type_domain_ids" widget="many2many_tags" invisible="1"/>
                                <field name="transition_category_id" required="1" string="Career Transition" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}" domain="[('id','in',transition_category_domain_ids)]" attrs="{'readonly':[('status','in',['to_approve','approve','rejected'])]}"/>
                                <field name="career_transition_type"  required="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}" domain="[('career_transition_category_id','=',transition_category_id),('id','in',transition_type_domain_ids)]" attrs="{'readonly':[('status','in',['to_approve','approve','rejected'])]}"/>
                                <field name="career_transition_template" readonly="1" force_save="1"/>
                                <field name="date_of_joining" string="Date Of Joining" attrs="{'invisible':[('career_transition','!=','termination')]}"/>
                                <label for="years_of_service" string="Years of Service" attrs="{'invisible':[('career_transition','!=','termination')]}"/>
                                <div attrs="{'invisible':[('career_transition','!=','termination')]}">
                                    <field name="years_of_service" readonly="1" attrs="{'invisible':[('career_transition','!=','termination')]}"/>
                                    <field name="year" readonly='1' attrs="{'invisible':[('career_transition','!=','termination')]}"/>
                                    <field name="months" readonly="1" attrs="{'invisible':[('career_transition','!=','termination')]}"/>
                                    <field name="month" readonly='1' attrs="{'invisible':[('career_transition','!=','termination')]}"/>
                                    <field name="days" readonly="1" attrs="{'invisible':[('career_transition','!=','termination')]}"/>
                                    <field name="day" readonly='1' attrs="{'invisible':[('career_transition','!=','termination')]}"/>
                                </div>

                                <field name="transition_date" string="Demotion Date" attrs="{'invisible':[('transition_type_name','!=','Demotion')],'required':[('transition_type_name','=','Demotion')],'readonly':[('status','in',['to_approve','approve','rejected'])]}"/>
                                <field name="transition_date" string="Promotion Date" attrs="{'invisible':[('transition_type_name','!=','Promotion')],'required':[('transition_type_name','=','Promotion')],'readonly':[('status','in',['to_approve','approve','rejected'])]}"/>
                                <field name="transition_date" string="Mutation Date" attrs="{'invisible':[('transition_type_name','!=','Mutation')],'required':[('transition_type_name','=','Mutation')],'readonly':[('status','in',['to_approve','approve','rejected'])]}"/>
                                <field name="transition_date" string="Termination Date" attrs="{'invisible':[('transition_type_name','!=','Termination')],'required':[('transition_type_name','=','Termination')],'readonly':[('status','in',['to_approve','approve','rejected'])]}"/>
                                <field name="transition_date" string="Resignation Date" attrs="{'invisible':[('transition_type_name','!=','Resignation')],'required':[('transition_type_name','=','Resignation')],'readonly':[('status','in',['to_approve','approve','rejected'])]}"/>
                                <field name="transition_date" string="Pension Date" attrs="{'invisible':[('transition_type_name','!=','Pension')],'required':[('transition_type_name','=','Pension')],'readonly':[('status','in',['to_approve','approve','rejected'])]}"/>
                                <field name="transition_date" string="Transition Date" attrs="{'invisible':[('transition_type_name','in',('Pension','Demotion','Promotion','Mutation','Termination','Resignation'))],'required':[('transition_type_name','not in',('Pension','Demotion','Promotion','Mutation','Termination','Resignation'))],'readonly':[('status','in',['to_approve','approve','rejected'])]}" />

                                <field name="description" string="Demotion Reason" attrs="{'invisible':[('transition_type_name','!=','Demotion')],'required':[('transition_type_name','=','Demotion')],'readonly':[('status','in',['to_approve','approve','rejected'])]}" required="1"/>
                                <field name="description" string="Promotion Reason" attrs="{'invisible':[('transition_type_name','!=','Promotion')],'required':[('transition_type_name','=','Promotion')],'readonly':[('status','in',['to_approve','approve','rejected'])]}" />
                                <field name="description" string="Mutation Reason" attrs="{'invisible':[('transition_type_name','!=','Mutation')],'required':[('transition_type_name','=','Mutation')],'readonly':[('status','in',['to_approve','approve','rejected'])]}" />
                                <field name="description" string="Termination Reason" attrs="{'invisible':[('transition_type_name','!=','Termination')],'required':[('transition_type_name','=','Termination')],'readonly':[('status','in',['to_approve','approve','rejected'])]}" />
                                <field name="description" string="Resignation Reason" attrs="{'invisible':[('transition_type_name','!=','Resignation')],'required':[('transition_type_name','=','Resignation')],'readonly':[('status','in',['to_approve','approve','rejected'])]}" />
                                <field name="description" string="Pension Reason" attrs="{'invisible':[('transition_type_name','!=','Pension')],'required':[('transition_type_name','=','Pension')],'readonly':[('status','in',['to_approve','approve','rejected'])]}" />
                                <field name="description" string="Reason" attrs="{'invisible':[('transition_type_name','in',('Pension','Demotion','Promotion','Mutation','Termination','Resignation'))],'required':[('transition_type_name','not in',('Pension','Demotion','Promotion','Mutation','Termination','Resignation'))],'readonly':[('status','in',['to_approve','approve','rejected'])]}" />

                                <field name="company_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                <field name="company_address" string="Company Address" invisible="1"/>
                                <field name="create_date" />
                                <field name="create_uid" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                <field name="is_employee_sequence_number" invisible="1" />
                            </group>





                        </group>
                        <notebook>
                            <page name="career_transition_detail" string="Career Transition Details">
                                <group>
                                    <group>
                                        <field name="employee_number_id" string="Employee ID" readonly="1" force_save="1"/>
                                        <field name="contract_id" string="Contract" readonly="1" force_save="True" />
                                        <field name="contract_type_id" string="Contract Type"/>
                                        <field name="company_id" readonly="1" string="Company"/>
                                        <field name="work_location_id" string="Work Location" readonly="1" force_save="1"/>
                                        <field name="department_id" string="Department" readonly="1" force_save="1"/>
                                        <field name="job_id" string="Job Position" readonly="1" force_save="1"/>
                                        <field name="employee_grade_id" string="Employee Grade" readonly="1" force_save="1"/>
                                    </group>

                                    <group attrs="{'invisible':[('career_transition','!=','movement')]}">
                                        <field name="same_as_previous" attrs="{'required':[('career_transition','=','movement')],'readonly':[('status','in',['to_approve','approve','rejected'])]}"/>
                                        <field name="new_employee_number_id" attrs="{'invisible':[('is_employee_sequence_number','=',True)],'required':[('is_employee_sequence_number','=',False),('career_transition','=','movement')],'readonly':[('status','in',['to_approve','approve','rejected'])]}" string="New Employee ID"/>
                                        <field name="new_contract_id"  string="New Contract" attrs="{'required':[('career_transition','=','movement')],'readonly':[('status','in',['to_approve','approve','rejected'])]}"/>
                                        <field name="new_contract_type_id" string="New Contract Type" attrs="{'required':[('career_transition','=','movement')],'readonly':[('status','in',['to_approve','approve','rejected'])]}" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                        <field name="allowed_company_ids" string="Allowed Companies" widget="many2many_tags" invisible="1" force_save="1"/>
                                        <field name="new_company_id" string="New Company" attrs="{'required':[('career_transition','=','movement')],'readonly':[('status','in',['to_approve','approve','rejected'])]}" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                        <field name="new_work_location_id"  string="New Work Location" attrs="{'required':[('career_transition','=','movement')],'readonly':[('status','in',['to_approve','approve','rejected'])]}" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                        <field name="new_department_id"  string="New Department" attrs="{'required':[('career_transition','=','movement')],'readonly':[('status','in',['to_approve','approve','rejected'])]}" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                        <field name="new_job_id"  string="New Job Position" attrs="{'required':[('career_transition','=','movement')],'readonly':[('status','in',['to_approve','approve','rejected'])]}" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                        <field name="new_employee_grade_id" string="New Employee Grade" attrs="{'required':[('career_transition','=','movement')],'readonly':[('status','in',['to_approve','approve','rejected'])]}" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                    </group>

                                </group>

                            </page>


                            <page name="career_transition_detail_matrix" string="Approval Matrix Lines">
                                <field name="approval_matrix_ids"  readonly="1" force_save="1">
                                    <tree>
                                        <field name="sequence" />
                                        <field name="approver_id" widget="many2many_tags" />
                                        <field name="matrix_user_ids" widget="many2many_tags" readonly="1" invisible="1" force_save="1"/>
                                        <field name="is_delegation_mail_sent" invisible="1"/>
                                        <field name="minimum_approver"/>
                                        <field name="approval_status" />
                                        <field name="timestamp" />
                                        <field name="feedback" />
                                    </tree>
                                    </field>

                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


