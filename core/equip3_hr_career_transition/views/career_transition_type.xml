<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="career_transition_type_form" model="ir.ui.view">
            <field name="name">career.transition.type.form</field>
            <field name="model">career.transition.type</field>
            <field name="arch" type="xml">
                <form string="Employee Disciplinary">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="letter_id" />
                                <field name="career_transition_category_id" required="1"/>   
                                <field name="encashment_leave"/>
                                <field name="leave_type_ids" widget="many2many_tags" attrs="{'invisible': [('encashment_leave','=',False)],'required': [('encashment_leave','=',True)]}"/> 
                                <field name="notice_period"/>
                                <field name="notice_period_days" attrs="{'invisible': [('notice_period','=',False)]}"/>
                                <field name="day_count_by" attrs="{'invisible': [('notice_period','=',False)]}"/>
                                <field name="group_ids" widget="many2many_tags" required="1"/>
                                <field name="create_date" />
                                <field name="create_uid" />
                            </group>                           
                        </group>
                    
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="career_transition_type_view" model="ir.ui.view">
            <field name="name">career.transition.type.tree</field>
            <field name="model">career.transition.type</field>
            <field name="arch" type="xml">
                <tree string="Carrer Transition Request">
                    <field name="name"/>
                    <field name="letter_id" />
                    <field name="career_transition_category_id"/>
                    <field name="create_date"/>
                    <field name="create_uid"/>
                </tree>
            </field>
        </record>

        <record id="career_transition_type_search_view" model="ir.ui.view">
            <field name="name">career.transition.type.search</field>
            <field name="model">career.transition.type</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="letter_id"/>
                    <field name="career_transition_category_id"/>
                </search>
            </field>
        </record>

        <record id="career_transition_type_act_window" model="ir.actions.act_window">
            <field name="name">Career Transition Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">career.transition.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Career Transition Type.
                </p>
            </field>
        </record>

        

        <menuitem name="Configuration" id="hr_career_transition_configuration_menu_root" parent="hr_career_transition_menu_root" sequence="12" groups="equip3_hr_career_transition.career_transition_team_approver,equip3_hr_career_transition.career_transition_administrator"/>
        <menuitem name="Career Transition Type" id="hr_career_transition_menu_type" parent="hr_career_transition_configuration_menu_root" action="career_transition_type_act_window" sequence="1"/>

    </data>
</odoo>