<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.equip3_hr_career_transition</field>
        <field name="model">res.config.settings</field>
        <!-- <field name="priority" eval="70"/> -->
        <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
        <field name="arch" type="xml">
           
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Career Transition" string="Career Transition" data-key="equip3_hr_career_transition" >
                    <h2>Career Transition Approval Setting</h2>
                    <div class="row mt16 o_settings_container" name="career_transition_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="career_transition_control_setting" title="Presence of employees">
                            <div class="content-group">
                                <div class="mt16">
                                    <label for="type_approval" string="Approval Method"/>
                                    <field style="margin-left:10px;" name="type_approval" class="oe_inline" required="1"/>
                                </div>
                                <div class="mt16" attrs="{'invisible':[('type_approval','!=','employee_hierarchy')]}">
                                    <label for="level" string="Approval Levels"/>
                                    <field style="margin-left:16px;" name="level" class="oe_inline" required="1"/>
                                </div>
                            </div>
                        </div>
                    </div>
                        <h2>Notification</h2>
                        <div class="row mt16 o_settings_container"
                             name="career_transition_setting_wa_container">
                            <div class="col-12 col-lg-6 o_setting_box"
                                 id="career_transition_wa_setting">
                                <div class="o_setting_left_pane">
                                    <field name="send_by_wa_career_transition"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label string="Send By Whatsapp" for="send_by_wa_career_transition"/>
                                </div>
                            </div>
                        </div>
                        <div class="row mt16 o_settings_container"
                             name="career_transition_setting_email_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="career_transition_email_setting">
                                <div class="o_setting_left_pane">
                                    <field name="send_by_email_career_transition"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label string="Send By Email" for="send_by_email_career_transition"/>
                                </div>
                            </div>
                        </div>
                        <!--                Auto Email Follow Cron-->
                        <div class="row mt16 o_settings_container" name="auto_follow_up_career">
                            <div class="col-12 col-lg-6 o_setting_box" id="auto_follow_up_career_setting">
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="auto_follow_up_career"/>
                                        <label for="auto_follow_up_career" string="Auto Follow Up" class="oe_inline"
                                               style="margin-left:10px;"/>
                                    </div>
                                    <div class="mt16" attrs="{'invisible':[('auto_follow_up_career','!=',True)]}">
                                        <label for="interval_number_career" string="Execute Every"/>
                                        <div attrs="{'invisible':[('auto_follow_up_career','!=',True)]}">
                                            <field name="interval_number_career" class="oe_inline"
                                                   attrs="{'required':[('auto_follow_up_career','=',True)]}"/>
                                            <field name="interval_type_career" class="oe_inline"
                                                   attrs="{'required':[('auto_follow_up_career','=',True)]}"/>
                                        </div>
                                    </div>
                                    <div class="mt16" attrs="{'invisible':[('auto_follow_up_career','!=',True)]}">
                                        <label for="number_of_repetitions_career" string="Number of Repetitions"/>
                                        <field name="number_of_repetitions_career" class="oe_inline"
                                               attrs="{'required':[('auto_follow_up_career','=',True)]}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="equip3_hr_career_transition_config_settings_action" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'equip3_hr_career_transition', 'bin_size': False}</field>
    </record>

    <menuitem id="equip3_hr_career_transition_menu_configuration"
        name="Settings"
        parent="hr_career_transition_configuration_menu_root"
        sequence="0"
        action="equip3_hr_career_transition_config_settings_action"
        groups="base.group_system"/>
</odoo>
