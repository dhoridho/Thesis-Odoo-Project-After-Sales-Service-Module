<odoo>
<data>

    

    <record model="ir.module.category" id="equip3_hr_career_transition.career_transition_category">
        <field name="name">Career Transition</field>
        <field name="sequence">11</field>
        <field name="parent_id" ref="base.module_category_human_resources"/>
    </record>

    <record id="equip3_hr_career_transition.career_transition_self_service" model="res.groups">
        <field name="name">Self Service</field>
        <field name="category_id" ref="equip3_hr_career_transition.career_transition_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="equip3_hr_career_transition.career_transition_team_approver" model="res.groups">
        <field name="name">Supervisor</field>
        <field name="category_id" ref="equip3_hr_career_transition.career_transition_category"/>
        <field name="implied_ids" eval="[(4, ref('equip3_hr_career_transition.career_transition_self_service'))]"/>
    </record>

    <record id="equip3_hr_career_transition.career_transition_all_approver" model="res.groups">
        <field name="name">HR Manager</field>
        <field name="category_id" ref="equip3_hr_career_transition.career_transition_category"/>
        <field name="implied_ids" eval="[(4, ref('equip3_hr_career_transition.career_transition_team_approver'))]"/>
    </record>

    <record id="equip3_hr_career_transition.career_transition_administrator" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="equip3_hr_career_transition.career_transition_category"/>
        <field name="implied_ids" eval="[(4, ref('equip3_hr_career_transition.career_transition_all_approver'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>


</data>


</odoo>