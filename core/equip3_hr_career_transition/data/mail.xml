<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data noupdate="1">
    <!-- Start Aproover or Confirm State Email template-->
   <record id="email_template_approver_of_career_transition" model="mail.template">
            <field name="name">Application for career transition request Approval - Send by Email</field>
            <field name="email_from">${ctx['email_from']|safe}</field>
            <field name="subject">Application for career transition request Approval</field>
            <field name="email_to">${ctx['email_to']|safe}</field>
            <field name="model_id" ref="equip3_hr_career_transition.model_hr_career_transition"/>
            <field eval="True" name="auto_delete"/>
            <field name="body_html"><![CDATA[
            <p>Dear ${ctx['approver_name']|safe},</p>
            <br/>
            <p>
                Based on the Career Transition Request ${object.number}. You have approval pending that need your decision to approve or reject the Career Transition Request from ${object.employee_id.name}.
            </p>
            <br/>
            <p>
                ${object.employee_id.name} has requested Career Transition ${object.transition_category_id.name} with Career Transition Type ${object.career_transition_type.name} on ${ctx['date_from']|safe}.
            </p>
            <br/>
            <p>
            You can approve or reject the Career Transition Request by clicking this button:
            </p>
            <br/>
            <a href="${ctx['url']|safe}"
               style="padding: 8px 12px; font-size: 12px; color: #FFFFFF; text-decoration: none !important; font-weight: 400; background-color: #875A7B; border: 0px solid #875A7B; border-radius:3px">
               View Career Transition Request
            </a>
            <br/>
            <br/>
            <p>
                Thank you.
            </p>
            <br/>
            <br/>
        ]]></field>
        </record>
        <!-- Start Aprooved or Confirm State Email template-->
        <record id="email_template_approved_career_transition" model="mail.template">
            <field name="name">Approval of career transition Request - Send by Email</field>
            <field name="email_from">${ctx['email_from']|safe}</field>
            <field name="subject">Approval of career transition Request</field>
            <field name="email_to">${ctx['email_to']|safe}</field>
            <field name="model_id" ref="equip3_hr_career_transition.model_hr_career_transition"/>
            <field eval="True" name="auto_delete"/>
            <field name="body_html"><![CDATA[
            <p>Dear ${object.employee_id.name},</p>
            <br/>
            <p>
                We have received your Career Transition Request ${object.number}.
            </p>
            <br/>
            <p>
                This notification serves as confirmation that your Career Transition Request has been Approved.
            </p>
            <br/>
            <br/>
            <p>
                Thank you.
            </p>
            <br/>
            <br/>
        ]]></field>
        </record>
    <!-- End Start Aprooved State Email template-->

    <!-- Start Reject Email template-->
        <record id="email_template_rejection_of_career_transition" model="mail.template">
            <field name="name">Rejection of career transition Request - Send by Email</field>
            <field name="email_from">${ctx['email_from']|safe}</field>
            <field name="subject">Rejection of career transition Request</field>
            <field name="email_to">${ctx['email_to']|safe}</field>
            <field name="model_id" ref="equip3_hr_career_transition.model_hr_career_transition"/>
            <field eval="True" name="auto_delete"/>
            <field name="body_html"><![CDATA[
            <p>Dear ${object.employee_id.name},</p>
            <br/>
            <p>
                We have received your Career Transition Request ${object.number}.
            </p>
            <br/>
            <p>
                This notification serves as confirmation that your Career Transition Request has been Rejected.
            </p>
            <br/>
            <br/>
            <p>
                Thank you.
            </p>
            <br/>
            <br/>
        ]]></field>
        </record>
    <!-- End Reject Email template-->

<!--    Career Transition Letter-->
     <record id="email_template_of_career_transition_letter" model="mail.template">
            <field name="name">Career transition Letter - Send by Email</field>
            <field name="email_from">${(user.email or '')}</field>
            <field name="subject">Career Transition Letter for ${object.employee_id.name}</field>
            <field name="email_to">${(object.employee_id.user_id.email)}</field>
            <field name="model_id" ref="equip3_hr_career_transition.model_hr_career_transition"/>
            <field eval="True" name="auto_delete"/>
            <field name="body_html"><![CDATA[
            <p>Dear ${object.employee_id.name},</p>
            <br/>
            <p>
                Based on the Career Transition ${object.number}.
            </p>
            <br/>
            <p>
                As an employee you get a career transition in this company, all matters related to your rights and obligations can be seen in your career transition letter.
            </p>
            <br/>
            <p>
                You can get the Career Transition Letter in attachment in the below:
            </p>
            <br/>
            <br/>
            <p>
                Thank you.
            </p>
            <br/>
            <br/>
        ]]></field>
        </record>
    </data>
</odoo>