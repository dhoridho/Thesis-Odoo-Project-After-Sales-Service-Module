<odoo>
	<template id="transition_letter" >
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
            	<t t-foreach="docs" t-as="doc">
	                <div class="page">
	                    <div class="row">
	                        <div class="col-xs-12">
	                        	<div t-raw="doc.print_on_page()"/>
	                        </div>
	                    </div>
	                </div>
	            </t>
            </t>
        </t>
	</template>

<record id="equip3_hr_career_transition_letter" model="ir.actions.report">
   <field name="name">Career Transition</field>
   <field name="model">hr.career.transition</field>
   <field name="report_type">qweb-pdf</field>
   <field name="report_name">equip3_hr_career_transition.transition_letter</field>
   <field name="report_file">equip3_hr_career_transition.transition_letter</field>
   <field name="attachment_use">1</field>
   <field name="binding_type">report</field>
   <field name="binding_model_id" ref="model_hr_career_transition"/>
   <field name="paperformat_id" ref="base.paperformat_euro"/>
   <field name="print_report_name">'Career Transition - %s' % (object.employee_id.name)</field>
</record>


    <template id="career_transition_letter_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="doc">
                    <div class="page">
                        <div class="row">
                            <div class="col-xs-12">
                                <div t-raw="doc.get_career_transition_letter()"/>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="equip3_attachment_hr_career_transition_letter" model="ir.actions.report">
        <field name="name">Career Transition Letter Report</field>
        <field name="model">hr.career.transition</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">equip3_hr_career_transition.career_transition_letter_template</field>
        <field name="report_file">equip3_hr_career_transition.career_transition_letter_template</field>
        <field name="attachment_use">1</field>
        <field name="binding_model_id" eval="False"/>
        <field name="paperformat_id" ref="base.paperformat_euro"/>
        <field name="print_report_name">'%s_Training Update' % (object.employee_id.name)</field>
    </record>

