<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="roomwise_guestwise_report_view">
            <t t-call="web.html_container">
                <t t-call="web.internal_layout">
                    <div class="page">
                        <h1 style="text-align:center;">Room and Guestwise Report</h1>

                        <table cellpadding="5" class="table table-condensed" width="100%">
                            <thead>
                                <tr style="background-color:#eaeaea;">
                                    <th>Room No</th>
                                    <th>Check In</th>
                                    <th>Check Out</th>
                                    <th>Guest Name</th>
                                    <th>Address</th>
                                    <th>Is Checkin</th>
                                    <th>Is Checkout</th>
                                </tr>
                            </thead>
                            <tbody width="100%">
                                <tr t-foreach="get_roomtype_guest_information(docs)" t-as="o" style="border:none">
                                    <td>
                                        <span t-esc="o['room_name']"/>
                                    </td>

                                    <t t-foreach="o['data']" t-as="line">
                                        <td>
                                            <span t-esc="line['checkin']" t-options='{"widget": "datetime"}'/>
                                        </td>
                                        <td>
                                            <span t-esc="line['checkout']" t-options='{"widget": "datetime"}'/>
                                        </td>
                                        <td>
                                            <span t-esc="line['guest_name']"/>
                                        </td>
                                        <td>
                                            <t t-if="line['address']">
                                                <span t-esc="line['address']"/>
                                            </t>
                                            <t t-if="not line['address']">
												<span class="text-center">-</span>
											</t>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="line['is_checkin']"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="line['is_checkout']"/>
                                        </td>
                                    </t>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>

    </data>
</odoo>
