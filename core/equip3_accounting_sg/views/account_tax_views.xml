<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account.action_tax_form" model="ir.actions.act_window">
        <field name="context">
            {'search_default_sale': True, 'search_default_purchase': True}
        </field>
    </record>

    <function model="account.tax" name="action_remove_taxes"/>

    <record id="view_tax_form_inherit" model="ir.ui.view">
        <field name="name">account.tax.view.form.inherit</field>
        <field name="model">account.tax</field>
        <field name="inherit_id" ref="account.view_tax_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='category_ids']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
