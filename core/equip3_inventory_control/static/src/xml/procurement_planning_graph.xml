<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="ProcurementPlanningGraph">
        <div class="o_procurement_planning_graph">
            <div class="o_filters">
                <select class="o_stock_forecast_month o_input">
                    <t t-foreach="[3, 6, 12]" t-as="month">
                        <t t-if="month === widget.stockForecastMonth">
                            <option t-att-value="month" selected="selected"><t t-esc="month"/> Month</option>
                        </t>
                        <t t-else="">
                            <option t-att-value="month"><t t-esc="month"/> Month</option>
                        </t>
                    </t>
                </select>

                <button class="btn btn-primary o_action_apply">Apply</button>
                <button class="btn btn-primary o_action_reset">Reset</button>
            </div>

            <div class="o_procurement_planning_content">
                <canvas id="o_procurement_planning_chart" height="250px"/>
            </div>
        </div>
    </t>

</templates>