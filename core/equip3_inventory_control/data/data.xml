<?xml version="1.0" encoding='UTF-8'?>
<odoo>
    <function model="usage.type" name="action_create_usage_type"/>

    <record model="ir.cron" id="auto_cancel_product_usage_cron">
        <field name="name">Auto Cancel Product Usage</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="model_id" ref="equip3_inventory_control.model_stock_scrap_request"/>
        <field name="state">code</field>
        <field name="code">model._cron_auto_cancel_product_usage()</field>
    </record>

    <record id="ir_cron_stock_warehouse_orderpoint" model="ir.cron">
        <field name="name">Stock Warehouse Orderpoint</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="model_id" ref="equip3_inventory_control.model_stock_warehouse_orderpoint"/>
        <field name="code">model._cron_stock_warehouse_orderpoint()</field>
        <field name="state">code</field>
    </record>

    <record id="ir_cron_replenishment_orderpoint" model="ir.cron">
        <field name="name">Cron Replenishment Orderpoint</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="model_id" ref="equip3_inventory_control.model_stock_warehouse_orderpoint"/>
        <field name="nextcall" eval="datetime.now() + (datetime.now(pytz.timezone('Asia/Jakarta')).replace(hour=00, minute=59, second=0) - datetime.now(pytz.timezone('Asia/Jakarta'))) % timedelta(hours=24)"/>
        <field name="code">model._cron_replenish_orderpoint()</field>
        <field name="state">code</field>
    </record>

