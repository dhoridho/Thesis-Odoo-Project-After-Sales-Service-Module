<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.actions.act_window" id="stock.action_inventory_form">
        <field name="domain">[('is_adj_value','=',False)]</field>
        <field name="context">{'is_from_stock_count': False}</field>
        <field name="name">Stock Count</field>
    </record>

    <record id="inherit_stock_inventory_form_view" model="ir.ui.view">
        <field name="name">stock.inventory.form.view.inherit</field>
        <field name="model">stock.inventory</field>
        <field name="inherit_id" ref="equip3_inventory_base.view_inventory_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='location_ids']" position="after">
                <field name="is_analytic_readonly_dup" invisible="1" />
            </xpath>
            <xpath expr="//field[@name='location_ids']" position="attributes">
                <attribute name="required">1</attribute>
            </xpath>
            <xpath expr="//button[@name='action_view_related_move_lines']" position="attributes">
                <attribute name="icon"> o-hm-smart-all-product-move</attribute>
            </xpath>
            <xpath expr="//button[@name='action_view_related_move_lines']" position="after">
                <button name="smart_button_for_inv_accounting" string="Inventory Adjustment"
                    icon="fa-archive" type="object"
                    invisible="context.get('is_from_stock_count', True)"
                    attrs="{'invisible': ['&amp;', ('inv_state', '!=', 'approved'),
                                                   ('is_stock_count_approval', '=', True),
                                             '|', ('state', '!=', 'completed')]}" />
            </xpath>

            <xpath expr="//button[@name='action_validate']" position="replace" />
            <xpath expr="//button[@name='action_validate']" position="replace" />
            <xpath expr="//button[@name='action_open_inventory_lines']" position="after">
                <button name="action_complete" string="Complete Inventory" type="object"
                    class="oe_highlight" attrs="{'invisible': [('state', '!=', 'confirm')]}"
                    groups="stock.group_stock_user" />
                <button name="action_open_inventory_lines" string="View Inventory" type="object"
                    invisible="context.get('is_inv_adj_acc', True)" class="oe_highlight"
                    attrs="{'invisible': [('is_analytic_readonly_dup', '=', False)]}" />
                <button name="action_open_inventory_lines_after_continue" string="Edit Inventory"
                    type="object" invisible="context.get('is_inv_adj_acc', False)"
                    class="oe_highlight"
                    attrs="{'invisible': ['|', ('is_analytic_readonly_dup', '=', False),('state', '!=', 'completed')]}" />
            </xpath>
            <xpath expr="//button[@name='action_start']" position="attributes">
                <attribute name="context">{'sequence_change': 1}</attribute>
            </xpath>
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="statusbar_visible">draft,confirm,completed,done</attribute>
            </xpath>
            <xpath expr="//button[@name='action_cancel_draft']" position="replace" />
            <xpath expr="//button[@name='action_cancel_draft']" position="replace" />

            <xpath expr="//button[@name='action_print']" position="after">
                <!--                        <button name="action_cancel_draft" states="cancel" string="Set to Draft"
                type="object"/>-->
                <button name="action_cancel_draft" states="confirm" string="Cancel Inventory"
                    type="object"
                    attrs="{'invisible': [('state', 'not in' , ['confirm','completed'])]}"
                    confirm="If you cancel this inventory adjustment, all its inventory adjustment lines will be lost. Are you sure you want to discard it ?" />
            </xpath>
            <xpath expr="//field[@name='location_ids']" position="before">
                <field name="warehouse_id" />
            </xpath>

            <xpath expr="//field[@name='warehouse_id']" position="attributes">
                <attribute name="domain">domain_warehouse_id</attribute>
            </xpath>

            <xpath expr="//label[@for='name']" position="attributes">
                <attribute name="for">inv_ref</attribute>
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="name">inv_ref</attribute>
            </xpath>

            <xpath expr="//field[@name='is_analytic_readonly_dup']" position="after">
                <field name="company_id" position="move" />
                <field name="branch_id"  required="1"/>
                <field name="analytic_tag_ids" widget="many2many_tags"
                    domain="[('company_id', '=', company_id)]"
                    attrs="{'readonly': [('is_analytic_readonly_dup', '=', False)], 'invisible': [('is_analytic_mandatory', '=', False)], 'required': [('is_analytic_mandatory', '=', True)]}" />
                <field name="is_analytic_mandatory" invisible="1" />
                <field name="is_counted_qty" invisible="1" />
                <field name="domain_warehouse_id" invisible="1" />
            </xpath>
            <xpath expr="//field[@name='accounting_date']" position="after">
                <field name="adjustment_account_id"/>
                <field name="is_stock_count_approval" attrs="{'readonly': [('inv_state', 'in', ('approved','reject','done'))]}" groups="base.group_no_one"/>
                <field name="approval_matrix_id"
                    attrs="{'invisible': [('is_stock_count_approval', '=', False)]}" />
                <field name="is_mbs_on_stock_count_and_inventory_adjustment" invisible="1" />
                <field name="approval_matrix_line_id" invisible="1" />
                <field name="is_approve_button" invisible="1" />
            </xpath>
            <field name="product_ids" position="replace" />
            <field name="exhausted" position="replace" />
            <field name="prefill_counted_quantity" position="replace" />
            <xpath expr="//group" position="inside">
                <group string="Stock Count Details">
                    <field name="inventoried_product" widget="radio" />
                    <field name="product_categories" widget="many2many_tags"
                        attrs="{'invisible': [('inventoried_product', '!=', 'specific_category')], 'required': [('inventoried_product', '=', 'specific_category')]}" />
                    <field name="product_ids" context="{'default_type': 'product'}"
                        widget="many2many_tags" />
                    <field name="exhausted" />
                    <field name="prefill_counted_quantity" widget="radio"
                        attrs="{'invisible': [('state', '!=', 'draft')]}" />
                    <field name="freeze_inventory" attrs="{'readonly': [('freeze_inventory_from_config', '=', True)]}"/>
                    <field name="freeze_inventory_from_config" invisible="1"/>
                    <field name="description" />
                </group>
            </xpath>
            <xpath expr="//field[@name='product_ids']" position="attributes">
                <attribute name="attrs">{
                    'invisible': [('inventoried_product', '!=', 'specific_product')],
                    'required': [('inventoried_product', '=', 'specific_product')],
                    'readonly': [('state', '=', 'done')],
                }</attribute>
                <attribute name="force_save">1</attribute>
                <attribute name="widget">many2many_tags</attribute>
            </xpath>
            <xpath expr="//header" position="inside">
                <field name="inv_state" widget="statusbar"
                    statusbar_visible="draft,confirm,completed,to_approve,approved,done"
                    attrs="{'invisible': ['|', '|', ('is_stock_count_approval','=', False), ('state', '=', 'rejected'), ('approval_matrix_id', '=', False)]}" />

                <field name="inv_state_1" widget="statusbar"
                    statusbar_visible="draft,confirm,completed,to_approve,rejected,done"
                    attrs="{'invisible': ['|', '|',('is_stock_count_approval','=', False), ('state', '!=', 'rejected'), ('approval_matrix_id', '=', False)]}" />
            </xpath>
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="attrs">{'invisible': [('is_stock_count_approval', '=', True), ('approval_matrix_id', '!=', False)]}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_open_inventory_lines']" position="after">
                <button name="set_to_draft_inv" string="Set To Draft" type="object"
                    class="btn btn-primary"
                    attrs="{'invisible': ['|', '|', ('is_stock_count_approval', '=', False), ('state', '!=', 'to_approve'), ('approval_matrix_id', '=', False)]}" />

                <button name="inv_request_for_approving" string="Request For Approval" type="object"
                    class="btn btn-primary"
                    attrs="{'invisible': ['|', '|', ('is_stock_count_approval', '=', False), ('state', '!=', 'completed'), ('approval_matrix_id', '=', False)]}" />

                <button name="inv_approving" string="Approve" type="object" class="btn btn-primary"
                    attrs="{'invisible': ['|', '|', ('is_stock_count_approval', '=', False), ('is_approve_button', '=', False), ('state', '!=', 'to_approve')]}" />

                <button name="inv_reject" string="Reject"
                    attrs="{'invisible': ['|', '|', ('is_stock_count_approval','=', False), ('is_approve_button', '=', False), ('state', '!=', 'to_approve')]}"
                    type="object" class="btn btn-primary" />

                <button name="action_validate" string="Validate Inventory" type="object"
                    attrs="{'invisible': ['|', '|', '|', ('is_analytic_readonly_dup', '=', False), ('line_ids', '=', []), '&amp;', ('state', '!=', 'completed'), ('is_stock_count_approval', '=', False), '&amp;', ('is_stock_count_approval', '=', True), ('state', '!=', 'approved')]}"
                    invisible="context.get('is_inv_adj_acc', True)" class="oe_highlight" />
                <button name="action_validate" string="Validate Inventory" type="object"
                    attrs="{'invisible': ['|', '|', '|', ('is_analytic_readonly_dup', '=', True), ('line_ids', '=', []), '&amp;', ('state', '!=', 'completed'), ('is_stock_count_approval', '=', False), '&amp;', ('is_stock_count_approval', '=', True), ('state', '!=', 'approved')]}"
                    class="oe_highlight" />
            </xpath>
            <xpath expr="//field[@name='prefill_counted_quantity']" position="attributes">
                <attribute name="attrs">{'readonly': [('is_counted_qty', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='accounting_date']" position="before">
                <field name="create_date" string="Created on" />
                <field name="create_uid" string="Created by" />
                <field name="user_id" />
            </xpath>
            <xpath expr="//field[@name='accounting_date']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('is_analytic_readonly_dup', '=',
                    False), ('state', 'not in', ('completed', 'approved'))], 'required' : [('state',
                    'in', ('completed', 'approved')), ('is_analytic_readonly_dup', '=', True)]}</attribute>
                <attribute name="invisible">context.get('is_inv_adj_acc', True)</attribute>
            </xpath>
            <xpath expr="//field[@name='description']" position="after">
                <field name="is_adj_value" invisible="1" />
            </xpath>

        </field>
    </record>

    <record id="sh_inven_adjt_barcode_mobile_inventory_form" model="ir.ui.view">
        <field name="model">stock.inventory</field>
        <field name="inherit_id" ref="sh_all_in_one_mbs.sh_inven_adjt_barcode_mobile_inventory_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']/tree" position="attributes">
                <attribute name="decoration-danger">""</attribute>
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree/field[@name='theoretical_qty']"
                position="attributes">
                <attribute name="groups">
                    equip3_inventory_accessright_setting.group_allow_see_onhand_difference</attribute>
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree/field[@name='difference_qty']"
                position="attributes">
                <attribute name="groups">
                    equip3_inventory_accessright_setting.group_allow_see_onhand_difference</attribute>
            </xpath>
            <xpath expr="//button[@name='action_start_sh_inventory_adjust_barcode_scanning']"
                position="attributes">
                <attribute name="attrs">{'invisible':
                    ['|',('is_mbs_on_stock_count_and_inventory_adjustment', '=', False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='sh_inventory_adjt_barcode_mobile']" position="attributes">
                <attribute name="attrs">{'invisible':
                    [('is_mbs_on_stock_count_and_inventory_adjustment', '=', False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='sh_inventory_adjt_bm_is_cont_scan']" position="attributes">
                <attribute name="attrs">{'invisible':
                    [('is_mbs_on_stock_count_and_inventory_adjustment', '=', False)]}</attribute>
            </xpath>
            <xpath expr="//notebook" position="attributes">
                <attribute name="attrs">{}</attribute>
            </xpath>
            <xpath expr="//notebook/page[1]" position="attributes">
                <attribute name="attrs">{'invisible':[('state','=','draft')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree/field[@name='product_uom_id']" position="after">
                <field name="currency_id" invisible="1"/>
                <field name="theoretical_unit_price" width="0.5" string="Current Unit Price" readonly="1"/>
                <field name="unit_price" width="0.5" string="New Unit Price"/>
                <field name="difference_unit_price" optional="show" width="0.5"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page name="approved_matrix_ids" string="Approval Matrix Line"
                    attrs="{'invisible': ['|', ('approval_matrix_id', '=', False), ('is_stock_count_approval', '=', False)]}">
                    <field name="approved_matrix_ids"
                        context="{'approved_matrix_ids': approved_matrix_ids}">
                        <tree editable="bottom">
                            <field name="sequence" />
                            <field name="user_ids" widget="many2many_tags" />
                            <field name="minimum_approver" />
                            <field name="state_char" />
                            <field name="time_stamp" invisible="1" />
                            <field name="feedback" />
                        </tree>
                    </field>
                </page>
                <page name="uom_conversion_ids" string="UOM Conversion History">
                    <field name="uom_conversion_ids" readonly="1">
                        <tree>
                            <field name="product_id" />
                            <field name="location_id" />
                            <field name="prod_lot_id" />
                            <field name="package_id" />
                            <field name="product_qty" />
                            <field name="uom_id" />
                            <field name="counted_qty" />
                            <field name="uom_conversion" />
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_stock_inventory_form_inherit_branch" model="ir.ui.view">
        <field name="name">stock.inventory.form.view.inherit</field>
        <field name="model">stock.inventory</field>
        <field name="inherit_id" ref="branch.view_stock_inventory_form_inherit_branch" />
        <field name="arch" type="xml">
            <field name="branch_id" position="replace" />
        </field>
    </record>

    <record id="inherit_stock_inventory_tree" model="ir.ui.view">
        <field name="name">stock.inventory.tree.view.inherit</field>
        <field name="model">stock.inventory</field>
        <field name="inherit_id" ref="stock.view_inventory_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="js_class">button_in_tree</attribute>
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="warehouse_id" />
                <field name="location_ids" string="Location" widget="many2many_tags" />
                <field name="inv_ref" string="Reference Number" />
            </xpath>
            <!-- <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="decoration-muted">state == 'draft'</attribute>
                <attribute name="decoration-warning">state == 'to_approve'</attribute>
                <attribute name="decoration-primary">state == 'completed'</attribute>
                <attribute name="decoration-success">state == 'done'</attribute>
                <attribute name="decoration-danger3">state == 'cancel'</attribute>
                <attribute name="decoration-danger">state == 'rejected'</attribute>
                <attribute name="decoration-success3">state == 'approved'</attribute>
                <attribute name="decoration-warning2">state == 'confirm'</attribute>
            </xpath> -->
            <xpath expr="//field[@name='state']" position="replace">
                <field name="state" widget="badge"
                    decoration-muted="state in ('draft', 'cancel')"
                    decoration-warning="state in ('to_approve', 'confirm', 'in_progress')"
                    decoration-primary="state == 'completed'"
                    decoration-success="state == 'done'"
                    decoration-danger="state == 'rejected'"
                    />
            </xpath>
        </field>
    </record>

    <record id="stock_inventory_line_inventory_control" model="ir.ui.view">
        <field name="name">stock.inventory.line.inventory.control</field>
        <field name="model">stock.inventory.line</field>
        <field name="inherit_id" ref="stock.stock_inventory_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='package_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="inherit_stock_inventory_tree_line_view" model="ir.ui.view">
        <field name="name">stock.inventory.line.tree.view.inherit</field>
        <field name="model">stock.inventory.line</field>
        <field name="inherit_id" ref="equip3_inventory_base.stock_inventory_line_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="before">
                <field name="sequence" readonly="1" force_save="1" />
            </xpath>
            <xpath expr="//field[@name='theoretical_qty']" position="attributes">
                <attribute name="groups">equip3_inventory_accessright_setting.group_allow_see_onhand_difference</attribute>
            </xpath>
            <xpath expr="//field[@name='difference_qty']" position="attributes">
                <attribute name="groups">equip3_inventory_accessright_setting.group_allow_see_onhand_difference</attribute>
            </xpath>
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-muted"></attribute>
                <attribute name="js_class">inventory_validate_button</attribute>
                <attribute name="decoration-bf"></attribute>
                <attribute name="decoration-danger"></attribute>
                <attribute name="default_order">id</attribute>
            </xpath>
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="is_adj_val" invisible="1" />
                <field name="adjustment_account_id" invisible="context.get('is_inv_adj_acc', True)"
                    attrs="{'invisible': [ ('state', 'not in', ('completed', 'approved'))]}" />
            </xpath>
            <xpath expr="//field[@name='prod_lot_id']" position="before">
                <field name="analytic_tag_ids" widget="many2many_tags" groups="analytic.group_analytic_tags" />
            </xpath>
            <xpath expr="//field[@name='theoretical_unit_price']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='unit_price']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='difference_unit_price']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="action_inventory_adjustments_with_value" model="ir.actions.act_window">
        <field name="name">Inventory Adjustments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.inventory</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" ref="stock.view_inventory_tree" />
        <field name="search_view_id" ref="stock.view_inventory_filter" />
        <field name="context">{'create': False, 'is_inv_adj_acc': False}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_barcode_scanner">
                Want to speed up your inventory counts? Try our Barcode app
            </p>
            <p>
                Barcode scanner can be activated via inventory settings.
                Manual inventory adjustments can also be performed and pre-filled with
                suggested counted quantity.
            </p>
        </field>
    </record>

    <record id="stock_inventory_line_tree_accounting_adj" model="ir.ui.view">
        <field name="name">stock.inventory.line.tree</field>
        <field name="model">stock.inventory.line</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <tree default_order="id" editable="bottom" string="Inventory Details">
                <field name="company_id" invisible="1" />
                <field name="product_tracking" invisible="1" />
                <field name="is_editable" invisible="1" />
                <field name="outdated" invisible="1" />
                <field name="sequence" readonly="1" force_save="1" />
                <field name="product_id" width="1.6" context="{'default_type': 'product'}"
                    readonly="context.get('default_product_id', False)"
                    attrs="{'readonly': ['|',
                                ('is_editable', '=', False),
                                ('state', 'not in', ('confirm','completed'))]}" />
                <field name="is_adj_val" invisible="1" />
                <field name="adjustment_account_id"
                    attrs="{'invisible': [ ('state', 'not in', ('completed', 'approved'))]}" />
                <field name="location_id" groups="stock.group_stock_multi_locations"
                    options="{'no_create': True}"
                    invisible="context.get('readonly_location_id', False)"
                    readonly="context.get('readonly_location_id', False)"
                    attrs="{'readonly': ['|',
                                ('is_editable', '=', False),
                                ('state', '!=', 'confirm')]}" />
                <field name="inventory_date" optional="hide" width="0.8" />
                <field name="analytic_tag_ids" widget="many2many_tags"
                    groups="analytic.group_analytic_tags" />
                <field name="prod_lot_id" groups="stock.group_production_lot" width="0.8"
                    attrs="{'readonly': ['|', '|',
                                ('product_tracking', '=', 'none'),
                                ('is_editable', '=', False),
                                ('state', '!=', 'confirm')]}"
                    context="{'default_product_id': product_id, 'default_company_id': company_id}"
                    optional="show" />
                <field name="package_id" groups="stock.group_tracking_lot" width="0.8"
                    attrs="{'readonly': ['|',
                                ('is_editable', '=', False),
                                ('state', '!=', 'confirm')]}"
                    string="Package" optional="show" />
                <field name="partner_id" groups="stock.group_tracking_owner"
                    attrs="{'readonly': ['|',
                                ('is_editable', '=', False),
                                ('state', '!=', 'confirm')]}" />
                <field name="theoretical_qty"
                    groups="equip3_inventory_accessright_setting.group_allow_see_onhand_difference"
                    string="On Hand" width="0.5" force_save="1" readonly="1" optional="show" />
                <button name="action_refresh_quantity" title="Refresh quantity" icon="fa-refresh"
                    type="object" attrs="{'invisible': [('outdated', '=', False)]}" />
                <field name="product_qty" width="0.5" string="Counted" />
                <field name="difference_qty"
                    groups="equip3_inventory_accessright_setting.group_allow_see_onhand_difference"
                    optional="show" width="0.5" />

                <field name="product_uom_id" string="UoM" groups="uom.group_uom" width="0.3" force_save="1"/>
                <field name="currency_id" invisible="1"/>
                <field name="theoretical_unit_price" width="0.5" string="Current Unit Price" force_save="1" readonly="1" optional="show"/>
                <field name="unit_price" width="0.5" string="New Unit Price"/>
                <field name="difference_unit_price" optional="show" width="0.5"/>
                <field name="inventory_id" invisible="1" />
                <field name="state" invisible="1" />
                <field name="product_cost_method" invisible="1"/>
            </tree>
        </field>
    </record>


    <record id="stock_inventory_line_tree_inherit" model="ir.ui.view">
        <field name="name">stock.inventory.line.tree.inherit</field>
        <field name="model">stock.inventory.line</field>
        <field name="inherit_id" ref="stock.stock_inventory_line_tree_no_product_create" />
        <field name="arch" type="xml">
            <!-- <xpath expr="//tree" position="attributes">
                <attribute name="js_class">stock_inventory_line_tree</attribute>
            </xpath> -->
            <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="attrs">{'readonly': ['|',
                    ('is_editable', '=', False),
                    ('state', 'not in', ('confirm','completed'))]}</attribute>
            </xpath>
            <xpath expr="//field[@name='product_qty']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', 'not in', ('confirm','completed'))]}</attribute>
            </xpath>
            <xpath expr="//field[@name='prod_lot_id']" position="attributes">
                <attribute name="attrs">{}</attribute>
            </xpath>
            <xpath expr="//field[@name='product_uom_id']" position="attributes">
