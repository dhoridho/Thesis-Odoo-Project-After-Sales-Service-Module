<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- purchase.order inherit form view -->
        <record id="purchase_order_inventory_control" model="ir.ui.view">
            <field name="name">purchase.order.inherit.view.inventory.control</field>
            <field name="model">purchase.order</field>
            <field name="mode">primary</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='incoterm_id']" position="after">
                    <field name="procurement_planning_id" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name ='order_line']//tree/field[@name='product_template_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name ='order_line']//tree/field[@name='product_template_id']" position="after">
                    <field name="product_id" domain="product_id_domain" required="1"/>
                    <field name="product_id_domain" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>