<odoo>
    <data>

        <record model="ir.ui.view" id="untaken_stock_tree_view">
            <field name="name">untaken.stock.tree</field>
            <field name="model">untaken.stock</field>
            <field name="arch" type="xml">
                <tree default_order="id desc">
                    <field name="name"/>
                    <field name="date_checked" />
                    <field name="stock_count" string="Stock Count Reference"/>
                    <field name="company_id" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="untaken_stock_form_view">
            <field name="name">untaken.stock.form</field>
            <field name="model">untaken.stock</field>
            <field name="arch" type="xml">
                <form string="Untaken Stock">
                    <header>
                        <button name="action_check" states="draft" string="Check" type="object"/>
                        <button name="action_create_stock_count"  string="Create Stock Count" type="object" attrs="{'invisible': ['|',('state','=', 'confirm'),('create_sc', '=', False)]}"/>
                        <button name="action_done" states="in_progress" string="Done" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,confirm"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1> <field name="name" readonly="1"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="warehouse_id" attrs="{'readonly': [('state', '!=', 'draft')]}" domain="domain_warehouse_id"/>
                                <field name="location_ids" widget="many2many_tags" domain="[('warehouse_id', '=', warehouse_id)]" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="company_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="branch_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="create_sc" states="in_progress,confirm" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                                <field name="domain_warehouse_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="create_date"  readonly="True"/>
                                <field name="create_uid"  readonly="True"/>
                                <field name="date_checked" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                                <field name="stock_count" domain="[]" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Untaken Stock Products">
                                <field name="untaken_stock_line_ids">
                                    <tree >
                                        <field name="product_id"/>
                                        <field name="quantity"/>
                                        <field name="product_unit_measure"/>
                                    </tree>

                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="sequence_untaken_stock" model="ir.sequence">
            <field name="name">Untaken Stock</field>
            <field name="code">untaken.stock</field>
            <field name="prefix">US/%(y)s/%(month)s/%(day)s/</field>
            <field name="padding">3</field>
        </record>

        <record model="ir.actions.act_window" id="untaken_stock_action">
            <field name="name">Untaken Stock</field>
            <field name="res_model">untaken.stock</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                </p>
            </field>
        </record>



        <menuitem id="untaken_stock_menu" name="Untaken Stock" parent="equip3_inventory_control.menu_root_control" action="untaken_stock_action" sequence="9"/>
    </data>
</odoo>