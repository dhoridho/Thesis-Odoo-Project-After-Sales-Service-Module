<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_form_stock_warehouse_orderpoint" model="ir.ui.view">
        <field name="name">stock.warehouse.orderpoint.inherite</field>
        <field name="model">stock.warehouse.orderpoint</field>
        <field name="inherit_id" ref="stock.view_warehouse_orderpoint_tree_editable" />
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='route_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//tree" position="attributes">
                <attribute name="editable"></attribute>
            </xpath>

            <xpath expr="//field[@name='trigger']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="action_to_take" required="1" />
                <field name="warehouse_id" />
            </xpath>
            <xpath expr="//field[@name='product_id']" position="before">
                <field name="name" string="Reference" />
            </xpath>
            <xpath expr="//field['route_id']" position="after">
                <field name="supplier_id" invisible="1" />
                <field name="is_low_stock" invisible="1" />
                <field name="source_location_id" invisible="1" />
                <field name="is_replenish_document_created" invisible="1" />
                <field name="purchase_request_id" invisible="1" />
                <field name="purchase_order_id" invisible="1" />
                <field name="material_request_id" invisible="1" />
                <field name="internal_transfer_id" invisible="1" />
                <field name="replenish_document_status" invisible="1" />
                <field name="quantity_restock" invisible="1" />
                <field name="is_quantity_restock" invisible="1" />
                <field name="qty_restock" invisible="1" />
            </xpath>
            <field name="product_min_qty" position="after">
                <field name="qty_to_order" position="move" />
                <field name="product_min_qty" position="move" />
                <field name="product_max_qty" position="move" />
                <field name="product_uom_name" position="move" />
                <button name="get_history" string="History"
                    class="oe_highlight" type="object" />
            </field>

            <xpath expr="//field[@name='qty_to_order']" position="attributes">
                <attribute name="required">1</attribute>
            </xpath>
            <xpath expr="//button[@name='%(stock.action_orderpoint_snooze)d']" position="attributes">
                <attribute name="class">text-warning o_replenish_buttons</attribute>
            </xpath>
            <xpath expr="/tree" position="attributes">
                <attribute name="create">false</attribute>
            </xpath>
        </field>
    </record>


    <record id="view_inventory_stock_reorder_report_search" model="ir.ui.view">
        <field name="name">stock.warehouse.orderpoint.inherit</field>
        <field name="model">stock.warehouse.orderpoint</field>
        <field name="inherit_id" ref="stock.stock_reorder_report_search" />
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='filter_to_reorder']" position="after">
                <separator />
                <!-- <filter string="Not Replenish" name="filter_to_not_replenish"
                    domain="[('is_replenish_document_created', '=', False)]" /> -->
                <filter string="Replenish on PR" name="filter_to_replenish_on_pr"
                    domain="[('is_replenish_document_created', '=', True), ('action_to_take', '=', 'create_pr')]" />
                <filter string="Replenish on RFQ" name="filter_to_replenish_on_rfq"
                    domain="[('is_replenish_document_created', '=', True), ('action_to_take', '=', 'create_rfq')]" />
                <filter string="Replenish on MR" name="filter_to_replenish_on_mr"
                    domain="[('is_replenish_document_created', '=', True), ('action_to_take', '=', 'create_mr')]" />
                <filter string="Replenish on ITR" name="filter_to_replenish_on_itr"
                    domain="[('is_replenish_document_created', '=', True), ('action_to_take', '=', 'create_itr')]" />
                <filter string="Quantity not Safe" name="filter_quantity_restock"
                    domain="[('is_quantity_restock' ,'=', True)]" />
                <separator />
            </xpath>
        </field>
    </record>

    <record id="view_warehouse_orderpoint_tree_editable_config_form" model="ir.ui.view">
        <field name="model">stock.warehouse.orderpoint</field>
        <field name="inherit_id" ref="stock.view_warehouse_orderpoint_tree_editable_config" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='location_id']" position="before">
                <field name="warehouse_id" />
            </xpath>
            <xpath expr="//field[@name='product_uom_name']" position="after">
                <field name="action_to_take" />
                <field name="periods" readonly="1" force_save="1" widget="char" />
                <field name="select_period" nolabel="1" widget="active_period_select" />
                <field name="is_minimum_quantity" />
            </xpath>
            <field name="is_minimum_quantity" position="attributes">
                <attribute name="string">Run Rate</attribute>
            </field>
            <field name="product_min_qty" position="attributes">
                <attribute name="string">Minimum Quantity</attribute>
            </field>
            <field name="product_max_qty" position="attributes">
                <attribute name="string">Maximum Quantity</attribute>
            </field>
            <field name="product_uom_name" position="attributes">
                <attribute name="string">Unit of Measure</attribute>
            </field>
            <xpath expr="//field[@name='product_id']" position="before">
                <field name="name" string="Reference" />
            </xpath>
            <xpath expr="//tree" position="attributes">
                <attribute name="editable"></attribute>
            </xpath>
            <xpath expr="//field[@name='product_min_qty']" position="before">
                <field name="start_date" invisible="1" widget="selection" />
                <field name="start_month" invisible="1" widget="selection" />
                <field name="end_date" invisible="1" widget="selection" />
                <field name="end_month" invisible="1" widget="selection" />
            </xpath>

        </field>
    </record>

    <record id="view_form_stock_warehouse_order_point" model="ir.ui.view">
        <field name="name">stock.warehouse.order.point.view</field>
        <field name="model">stock.warehouse.orderpoint</field>
        <field name="priority" eval="100" />
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group col="3">
                        <group name="left_group">
                            <field name="active" invisible="1" />
                            <field name="product_id" />
                            <field name="warehouse_id" />
                            <field name="filter_warehouse_id" invisible="1" />
                            <field name="location_id" domain="[('id', 'in', filter_warehouse_id)]"
                                attrs="{'required': [('action_to_take', '=', 'create_itr')]}" />
                            <field name="average_quantity_last_year" invisible="1" />
                            <field name="average_quantity_run_rate_days" invisible="1" />
                            <field name="product_tmpl_id" invisible="1" />
                            <field name="supplier_id" invisible="1"/>
                            <field name="partner_id" attrs="{'invisible': [('action_to_take', '!=', 'create_rfq')], 'required': [('action_to_take', '=', 'create_rfq')]}"/>
                            <!-- attrs="{'invisible': [('action_to_take', '!=', 'create_rfq')],
                            'required': [('action_to_take', '=', 'create_rfq')]}" -->
                            <field name="source_location_id"
                                attrs="{'invisible': [('action_to_take', '!=', 'create_itr')], 'required': [('action_to_take', '=', 'create_itr')]}" />

                        </group>
                        <group name="middle_group">
                            <field name="action_to_take" required="1" />
                            <field name="responsible_id" widget="many2many_tags" required="1" />
                            <field name="auto_trigger_replenishment" />
                            <field name="select_days_trigger"
                                attrs="{'invisible': [('auto_trigger_replenishment', '=', False)]}" />
                            <field name="is_minimum_quantity" />
                        </group>
                        <group name="right_group">
                            <field name="company_id" />
                            <field name="branch_id" />
                            <field name="create_uid" string="Created by" />
                            <field name="create_date" string="Created on" />
                        </group>
                        <group string="Reordering Rules" name="reordering_rules">
                            <field name="product_max_qty" string="Max Quantity" />
                            <field name="product_min_qty" string="Min Quantity"
                                attrs="{'readonly': [('is_minimum_quantity', '=', True)]}"
                                force_save="1" />
                            <field name="product_uom_name" string="Unit of Measure" />
                            <field name="qty_multiple" />
                        </group>
                        <group string="Set Reordering Rules Active Period" name="set_active_period">
                            <label for="start_date" />
                            <div class="d-flex">
                                <field name="start_date" style="width:20%;margin-right:10px;" />
                                <field name="start_month" style="width:30%;" />
                            </div>
                            <label for="end_date" />
                            <div class="d-flex">
                                <field name="end_date" style="width:20%;margin-right:10px;" />
                                <field name="end_month" style="width:30%;" />
                            </div>
                            <field name="select_period" invisible="1" widget="active_period_select" />
                            <field name="periods" readonly="1" force_save="1" />
                        </group>
                        <group string="Minimum Quantity based on Past Stock Demand"
                            attrs="{'invisible': [('is_minimum_quantity', '=', False)]}">
                            <label for="run_rate_type" />
                            <div class="d-flex">
                                <field name="run_rate_type" widget="radio" />
                            </div>
                            <label for="period_date" invisible="1" />
                            <div class="d-flex">
                                <field name="period_date" style="width:20%;margin-right:10px;"
                                    invisible="1" />
                                <field name="period_month" style="width:30%;" invisible="1" />
                            </div>
                            <label for="run_rate_period_before" />
                            <div class="d-flex">
                                <field name="run_rate_period_before"
                                    style="width:20%;margin-right:10px;"
                                    attrs="{'required': [('is_minimum_quantity', '=', True)]}" />
                                <span>days</span>
                            </div>
                            <label for="run_rate_period_after"
                                attrs="{'invisible': [('run_rate_type', '!=', 'get_last_year')]}" />
                            <div class="d-flex">
                                <field name="run_rate_period_after"
                                    style="width:20%;margin-right:10px;"
                                    attrs="{'invisible': [('run_rate_type', '!=', 'get_last_year')]}" />
                                <span
                                    attrs="{'invisible': [('run_rate_type', '!=', 'get_last_year')]}">
                                    days</span>
                            </div>
                        </group>
                        <!-- <group name="empty_group" attrs="{'invisible':[('is_minimum_quantity',
                        '=', True)]}">
                        </group> -->
                        <group string="Run Rate &amp; Safety Stock" name="run_rate_safety_stock1"
                            attrs="{'invisible':[('is_minimum_quantity', '=', False)]}">
                            <field name="run_rate_qty" force_save="1" readonly="1"
                                style="width:20%;margin-right:10px;" />
                            <label for="safety_stock_select" />
                            <div class="d-flex">
                                <field name="safety_stock_select" widget="radio" />
                            </div>
                            <label for="safety_stock" invisible="1" />
                            <div class="d-flex">
                                <field name="safety_stock" string="" style="width:20%;" />
                            </div>
                            <label for="safety_stock" invisible="1" />
                            <div class="d-flex text-muted">
                                <span>Set as 0 if does not use Safety Stock Quantity for Minimum to
                                    Order</span>
                            </div>
                            <field name="lead_days_last_year"
                                attrs="{'invisible': ['|', ('is_minimum_quantity', '=', False), ('run_rate_type', '!=', 'get_last_year')]}"
                                string="Lead Days" invisible="1" />
                            <field name="lead_days_run_rate_days"
                                attrs="{'invisible': ['|', ('is_minimum_quantity', '=', False), ('run_rate_type', '!=', 'get_past_days_data')]}"
                                string="Lead Days" readoly="0" invisible="1" />
                            <field name="lead_days" />
                        </group>
                        <group string="Run Rate &amp; Safety Stock" name="run_rate_safety_stock2"
                            attrs="{'invisible':[('is_minimum_quantity', '=', True)]}">
                            <field name="run_rate_qty" force_save="1" readonly="1"
                                style="width:20%;margin-right:10px;" attrs="{'invisible':[('is_minimum_quantity', '=', False)]}"/>
                            <label for="safety_stock_select" />
                            <div class="d-flex">
                                <field name="safety_stock_select" widget="radio" />
                            </div>
                            <label for="safety_stock" invisible="1" />
                            <div class="d-flex">
                                <field name="safety_stock" string="" style="width:20%;" />
                            </div>
                            <label for="safety_stock" invisible="1" />
                            <div class="d-flex text-muted">
                                <span>Set as 0 if does not use Safety Stock Quantity for Minimum to
                                    Order</span>
                            </div>
                            <field name="lead_days_last_year"
                                attrs="{'invisible': ['|', ('is_minimum_quantity', '=', False), ('run_rate_type', '!=', 'get_last_year')]}"
                                string="Lead Days" invisible="1" />
                            <field name="lead_days_run_rate_days"
                                attrs="{'invisible': ['|', ('is_minimum_quantity', '=', False), ('run_rate_type', '!=', 'get_past_days_data')]}"
                                string="Lead Days" readoly="0" invisible="1" />
                            <field name="lead_days" />
                        </group>
                        <group string="Low Stock Notification" name="low_stock_notification">
                            <field name="notification_user_ids" widget="many2many_tags" readonly="0" />
                        </group>
                        <group string="Product Information" name="product_information">
                            <field name="qty_on_hand" string="On Hand Quantity" />
                            <label for="stock_days" />
                            <div class="d-flex">
                                <field name="stock_days" readonly="1" force_save="1"
                                    style="width:20%;margin-right:10px;" />
                                <span>day(s) remaining until stock out</span>
                            </div>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <record id="stock.action_orderpoint" model="ir.actions.act_window">
        <field name="name">Reordering Rules</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="stock.view_stock_warehouse_orderpoint_kanban" />
    </record>

    <record model="ir.actions.act_window.view" id="stock_warehouse_order_point_action_kanban">
        <field name="sequence" eval="1" />
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="stock.view_stock_warehouse_orderpoint_kanban" />
        <field name="act_window_id" ref="stock.action_orderpoint" />
    </record>

    <record model="ir.actions.act_window.view" id="stock_warehouse_order_point_action_form">
        <field name="sequence" eval="3" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_form_stock_warehouse_order_point" />
        <field name="act_window_id" ref="stock.action_orderpoint" />
    </record>

    <record model="ir.actions.act_window.view" id="stock_warehouse_order_point_action_tree">
        <field name="sequence" eval="2" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="stock.view_warehouse_orderpoint_tree_editable_config" />
        <field name="act_window_id" ref="stock.action_orderpoint" />
    </record>

    <record model="ir.ui.menu" id="stock.menu_reordering_rules_replenish">
        <field name="parent_id" ref="equip3_inventory_control.menu_root_control" />
        <field name="sequence">3</field>
    </record>

    <record model="ir.actions.server" id="stock.action_replenishment">
        <field name="code">
            action = model.with_context(
            search_default_filter_to_reorder=True,
            search_default_filter_not_snoozed=True,
            search_default_groupby_product=True
            ).action_open_orderpoints()
        </field>
    </record>

    <!-- search_default_filter_to_not_replenish=True, -->

    <record id="stock.action_orderpoint_replenish" model="ir.actions.act_window">
        <field name="view_mode">tree,form</field>
        <field name="domain">[('action_to_take', '!=', 'no_action'), ('is_mo_created', '=', False)]</field>
    </record>


    <record id="stock_warehouse_order_point_replenishment_form_view" model="ir.ui.view">
        <field name="name">stock.warehouse.order.point.replenishment.form.view</field>
        <field name="model">stock.warehouse.orderpoint</field>
        <field name="priority" eval="100" />
        <field name="arch" type="xml">
            <form create="0">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="active" invisible="1" />
                            <field name="product_id" />
                            <field name="warehouse_id" />
                            <field name="filter_warehouse_id" invisible="1" />
                            <field name="location_id" domain="[('id', 'in', filter_warehouse_id)]"
                                attrs="{'required': [('action_to_take', '=', 'create_itr')]}" />
                            <field name="action_to_take" required="1" />
                            <field name="supplier_id" invisible="1"/>
                            <field name="partner_id" attrs="{'invisible': [('action_to_take', '!=', 'create_rfq')], 'required': [('action_to_take', '=', 'create_rfq')]}"/>
                            <field name="product_tmpl_id" invisible="1" />
                            <field name="source_location_id"
                                attrs="{'invisible': [('action_to_take', '!=', 'create_itr')], 'required': [('action_to_take', '=', 'create_itr')]}" />
                            <!-- <field name="average_quantity_last_year" invisible="1"/>
                            <field name="average_quantity_run_rate_days" invisible="1"/>
                            <field name="product_tmpl_id" invisible="1"/> -->
                        </group>
                        <group>
                            <field name="create_date" string="Created on" />
                            <field name="create_uid" string="Created by" />
                            <field name="company_id" />
                            <field name="branch_id" />
                            <field name="responsible_id" widget="many2many_tags" required="1"
                                readonly="1" />
                        </group>
                        <group string="Stock Details">
                            <field name="qty_on_hand" string="On Hand Quantity" />
                            <label for="qty_forecast" string="Forecast Quantity" />
                            <div class="d-flex">
                                <field name="qty_forecast" string="Forecast Quantity" />
                                <field name="json_lead_days_popover" optional="show" nolabel="1"
                                    string="Forecast Description" width="10px"
                                    widget="popover_widget"
                                    attrs="{'invisible': [('id', '=', False)]}" />
                            </div>
                        </group>
                        <group string="Reordering Rules">
                            <field name="product_min_qty" string="Minimum Quantity"
                                attrs="{'readonly': [('is_minimum_quantity', '=', True)]}"
                                force_save="1" readonly="1" />
                            <field name="is_minimum_quantity" invisible="1" />
                            <field name="product_max_qty" string="Maximum Quantity" readonly="1" />
                            <field name="qty_multiple" readonly="1" />
                            <field name="product_uom_name" string="Unit of Measure" />
                        </group>
                        <group string="Replenishment Details">
                            <field name="qty_to_order" string="Replenishment Quantity" />
                            <field name="purchase_request_id"
                                attrs="{'invisible': [('action_to_take', '!=', 'create_pr')]}"
                                readonly="1" force_save="1" />
                            <field name="pr_status"
                                attrs="{'invisible': [('action_to_take', '!=', 'create_pr')]}"
                                force_save="1" />
                            <field name="purchase_order_id"
                                attrs="{'invisible': [('action_to_take', '!=', 'create_rfq')]}"
                                readonly="1" force_save="1" />
                            <field name="rfq_status"
                                attrs="{'invisible': [('action_to_take', '!=', 'create_rfq')]}"
                                force_save="1" />
                            <field name="internal_transfer_id"
                                attrs="{'invisible': [('action_to_take', '!=', 'create_itr')]}"
                                readonly="1" force_save="1" />
                            <field name="itr_status"
                                attrs="{'invisible': [('action_to_take', '!=', 'create_itr')]}"
                                force_save="1" />
                            <field name="material_request_id"
                                attrs="{'invisible': [('action_to_take', '!=', 'create_mr')]}"
                                readonly="1" force_save="1" />
                            <field name="mr_status"
                                attrs="{'invisible': [('action_to_take', '!=', 'create_mr')]}"
                                force_save="1" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window.view" id="stock_warehouse_order_point_replenishment_form">
        <field name="sequence" eval="2" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="stock_warehouse_order_point_replenishment_form_view" />
        <field name="act_window_id" ref="stock.action_orderpoint_replenish" />
    </record>

    <record model="ir.actions.act_window.view" id="stock_warehouse_order_point_replenishment_tree">
        <field name="sequence" eval="1" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_form_stock_warehouse_orderpoint" />
        <field name="act_window_id" ref="stock.action_orderpoint_replenish" />
    </record>

    <record id="stock.action_orderpoint" model="ir.actions.act_window">
        <field name="context">{}</field>
    </record>

    <record id="stock_warehouse_order_point_inherit_group_id" model="ir.ui.view">
        <field name="name">sstock.warehouse.order.point.inherit.group.id</field>
        <field name="model">stock.warehouse.orderpoint</field>
        <field name="inherit_id" ref="stock.view_warehouse_orderpoint_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='group_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
