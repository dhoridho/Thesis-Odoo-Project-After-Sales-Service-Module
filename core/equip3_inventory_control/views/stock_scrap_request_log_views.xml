<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_stock_scrap_request_log_line_tree" model="ir.ui.view">
        <field name="name">view.stock.scrap.request.log.line.tree</field>
        <field name="model">stock.scrap.request.log.line</field>
        <field name="arch" type="xml">
            <tree string="Batch" default_order="create_date">
                <field name="log_id" invisible="1"/>
                <field name="request_line_ids_str" invisible="1"/>
                <field name="request_line_ids" invisible="1"/>
                <field name="request_line_ids_display" string="Line IDS"/>
                <field name="create_date"/>
                <field name="name" optional="hide"/>
                <field name="cron_id"/>
                <field name="lines_processed"/>
                <field name="total_lines"/>
                <field name="cron_active" invisible="1"/>
                <button name="run_manually" string="Run Manually" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'queue')]}"/>
                <button name="re_run" string="Re-Run" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'failed')]}"/>
                <field name="state" widget="badge" decoration-info="state == 'running'" decoration-success="state == 'done'" decoration-danger="state == 'failed'"/>
            </tree>
        </field>
    </record>

    <record id="view_stock_scrap_request_log_line_form" model="ir.ui.view">
        <field name="name">view.stock.scrap.request.log.line.form</field>
        <field name="model">stock.scrap.request.log.line</field>
        <field name="arch" type="xml">
            <form string="Batch">
                <sheet>
                    <group>
                        <group>
                            <field name="log_id" invisible="1"/>
                            <field name="create_date"/>
                            <field name="cron_id"/>
                            <field name="cron_active"/>
                            <field name="request_line_ids_str" invisible="1"/>
                        </group>
                        <group>
                            <field name="lines_processed"/>
                            <field name="total_lines"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="request_lines" string="Processed Request Lines">
                            <field name="request_line_ids">
                                <tree string="Processed Request Lines">
                                    <field name="location_id" domain="[('id', 'in', filter_location_ids)]"/>
                                    <field name="scrap_location_id" domain="[('usage', '=', 'inventory'),('scrap_location','=', True)]" invisible="1"/>
                                    <field name="product_id" domain="[('id', 'in', filter_product_ids)]"/>
                                    <field name="lot_id" domain="[('id', 'in', filter_lot_ids)]"/>
                                    <field name="state" invisible="1"/>
                                    <field name="available_quantity" force_save="1"/>
                                    <field name="scrap_qty"/>
                                    <field name="product_uom_id" domain="[('category_id', '=', product_uom_category_id)]"/>
                                    <field name="product_uom_category_id" invisible="1"/>
									<field name="analytic_tag_ids" widget="many2many_tags" readonly="1" groups="analytic.group_analytic_tags"/>
                                    <field name="package_id" domain="[('id', 'in', filter_package_ids)]" invisible="1"/>
                                    <field name="owner_id" domain="[('id', 'in', filter_owner_ids)]" invisible="1"/>
                                    <field name="cost_price" attrs="{'required': [('product_usage_state', 'in', ('confirmed', 'approved'))]}" groups="equip3_inventory_accessright_setting.group_allow_validate_product_usage" force_save="1"/>
                                    <field name="product_usage_state" invisible="1"/>
                                    <field name="filter_location_ids" widget="many2many_tags" invisible="1"/>
                                    <field name="filter_lot_ids" widget="many2many_tags" invisible="1"/>
                                    <field name="filter_package_ids" widget="many2many_tags" invisible="1"/>
                                    <field name="filter_owner_ids" widget="many2many_tags" invisible="1"/>
                                    <field name="filter_product_ids" widget="many2many_tags" invisible="1"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="warehouse_id" invisible="1"/>
                                    <field name="name" string="Scrap Reference"/>
                                </tree>
                            </field>
                        </page>
                        <page name="miscellaneous" string="Miscellaneous">
                            <group>
                                <field name="error_message" widget="text" attrs="{'invisible': [('error_message', '=', False)]}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_stock_scrap_request_log_tree" model="ir.ui.view">
        <field name="name">view.stock.scrap.request.log.tree</field>
        <field name="model">stock.scrap.request.log</field>
        <field name="arch" type="xml">
            <tree string="Product Usage Logs" create="0" delete="0" edit="0" default_order="id desc">
                <field name="scrap_request_id"/>
                <field name="create_date" string="Created On"/>
                <field name="lines_processed"/>
                <field name="total_lines"/>
                <field name="state" widget="badge" decoration-info="state == 'running'" decoration-success="state == 'done'" decoration-danger="state == 'failed'"/>
            </tree>
        </field>
    </record>

    <record id="view_stock_stock_scrap_request_log_form" model="ir.ui.view">
        <field name="name">view.stock.scrap.request.log.form</field>
        <field name="model">stock.scrap.request.log</field>
        <field name="arch" type="xml">
            <form string="Product Usage Logs" create="0" delete="0" edit="0">
                <header>
                    <field name="state" statusbar_visible="draft,queue,running,done" widget="statusbar"/>
                    <button name="run" type="object" string="Run" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button string="Scheduled Actions" type="object" name="action_view_cron" class="oe_stat_button" icon="fa-exchange"/>
                    </div>

                    <div class="oe_title">
                        <h1><field name="scrap_request_id"/></h1>
                    </div>

                    <group>
                        <group>
                            <field name="lines_processed"/>
                            <field name="total_lines"/>
                        </group>
                        <group>
                            <field name="create_date" string="Created On"/>
                            <field name="next_line_id" string="Next Batch"/>
                            <button string="Refresh" type="object" name="refresh" class="oe_highlight"/>
                        </group>
                    </group>

                    <notebook>
                        <page name="cost_batch" string="Cost Batch">
                            <field name="line_ids" context="{
                                'tree_view_ref': 'equip3_inventory_control.view_stock_scrap_request_log_line_tree',
                                'form_view_ref': 'equip3_inventory_control.view_stock_scrap_request_log_line_form'
                            }"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_view_stock_scrap_request_log" model="ir.actions.act_window">
        <field name="name">Product Usage Logs</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.scrap.request.log</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem action="action_view_stock_scrap_request_log" id="menu_action_view_stock_scrap_request_log" parent="equip3_inventory_control.menuitem_stock_product_usage_parent" sequence="31"/>

</odoo>