<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- stock.day.average tree view -->
        <record id="stock_day_average_view_tree" model="ir.ui.view">
            <field name="name">stock.day.average.view.tree</field>
            <field name="model">stock.day.average</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="branch_id"/>
                </tree>
            </field>
        </record>

        <!-- stock.day.average form view -->
        <record id="stock_day_average_view_form" model="ir.ui.view">
            <field name="name">stock.day.average.view.form</field>
            <field name="model">stock.day.average</field>
            <field name="arch" type="xml">
                <form string="Average Stock Day">
                    <header>
                        <field name="is_itr_created" invisible="1"/>
                        <button name="action_compute" string="Compute" type="object" class="oe_highlight" invisible="0"/>
                        <button name="action_create_itr" string="Create ITR" type="object" class="oe_highlight" attrs="{'invisible':[('is_itr_created', '=', True)]}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_itr" type="object" class="oe_stat_button" icon="fa-arrows-v" attrs="{'invisible':[('transfer_count', '=', 0)]}">
                            <field name="transfer_count" string="Transfer" widget="statinfo" />
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1" required="1"/>
                            </h1>
                        </div>
                        <group col="3">
                            <group string="Product Information">
                                <field name="product_id" required="1"/>
                                <field name="cluster_id" required="1"/>
                                <field name="action_type" required="1"/>
                                <field name="create_uid" readonly="1"/>
                            </group>
                            <group string="Optimizer Dates">
                                <field name="start_date" required="1"/>
                                <field name="end_date"/>
                                <field name="periode"/>
                                <field name="create_date" readonly="1"/>
                            </group>    
                            <group string="Information">
                                <field name="company_id" required="1" readonly="1"/>
                                <field name="branch_id" required="1"/>
                                <field name="users_ids" widget="many2many_tags" required="1"/>
                                <field name="is_computed" invisible="1"/>
                                <field name="percent_for_avl"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Warehouse">
                                <field name="warehouse_line" force_save="1" readonly="1">
                                    <tree editable="bottom">
                                        <field name="warehouse_id" required="1"/>
                                        <field name="quantity"/>
                                        <field name="run_rate"/>
                                        <field name="stock_days"/>
                                        <field name="average_stock"/>
                                        <field name="optimal_qty"/>
                                        <field name="risk_assesment" 
                                            decoration-danger="risk_assesment == 'Overstock'" decoration-warning="risk_assesment == 'Understock'"
                                            decoration-success="risk_assesment == 'Healthy'" attrs="{'column_invisible': [('parent.is_computed', '=', False)]}"/>
                                        <field name="total_optimal_qty" invisible="0" optional="hide"/>
                                        <field name="is_need_itr" invisible="0" optional="hide"/>
                                        <field name="id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
                </form>
            </field>
        </record>

        <!-- stock.average.day action window -->
        <record id="stock_average_day_action" model="ir.actions.act_window">
            <field name="name">Stock Optimizer</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.day.average</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="stock_average_day_menu" name="Stock Optimizer" parent="equip3_inventory_control.menu_root_control" action="stock_average_day_action" sequence="20"/>

    </data>
</odoo>