<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- cluster.area tree view -->
        <record id="cluster_area_view_tree" model="ir.ui.view">
            <field name="name">cluster.area.view.tree</field>
            <field name="model">cluster.area</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="warehouse_line" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <!-- cluster.area form view -->
        <record id="cluster_area_view_form" model="ir.ui.view">
            <field name="name">cluster.area.view.form</field>
            <field name="model">cluster.area</field>
            <field name="arch" type="xml">
                <form string="Cluster Area">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="create_uid"/>
                                <field name="create_date"/>
                                <field name="company_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Warehouse">
                                <field name="warehouse_line">
                                    <tree editable="bottom">
                                        <field name="warehouse_id" required="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- cluster.area action window -->
        <record id="cluster_area_action" model="ir.actions.act_window">
            <field name="name">Cluster Area</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cluster.area</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="cluster_area_menu_act" name="Cluster Area" parent="stock.menu_warehouse_config" action="cluster_area_action" sequence="30"/>
        
    </data>
</odoo>