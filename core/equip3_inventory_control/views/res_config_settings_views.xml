<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_sale_stock_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.form.view.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale_stock.res_config_settings_view_form_stock"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='module_procurement_jit']/../.." position="after">
                <!-- <h2>Internal Transfer Operation</h2> -->
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <strong>Product Usage &amp; Scrap</strong>
                        <div class="text-muted">
                            Set expiry periods in day(s) of Product Usage and Scrap
                            Request document
                        </div>
                        <div class="content-group product_usage_expiry">
                            <div class="mt10">
                                <label for="product_expiry"/>
                                <field name="product_expiry"/> days
                                <field name="expiry_days_select"/> the Scheduled Date
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[@data-key='stock']" position="inside">
                <h2>Product Usage Mobile Barcode Scanner</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="pu_barcode_mobile_type" />
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="pu_barcode_mobile_type" class="o_light_label" widget="radio" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="pu_bm_is_add_product" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="pu_bm_is_add_product" />
                            <div class="text-muted">
                                Is add product in product usage in draft state?
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box" invisible="1">
                        <div class="o_setting_left_pane">
                            <field name="pu_bm_is_cont_scan" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="pu_bm_is_cont_scan" />
                            <div class="text-muted">
                                Continuous scanning or not
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="pu_bm_is_notify_on_success" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="pu_bm_is_notify_on_success" />
                            <div class="text-muted">
                                Notification on Succeed
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="pu_bm_is_notify_on_fail" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="pu_bm_is_notify_on_fail" />
                            <div class="text-muted">
                                Notification on Failed
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('pu_bm_is_notify_on_success', '=', False )]}">
                        <div class="o_setting_left_pane">
                            <field name="pu_bm_is_sound_on_success" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="pu_bm_is_sound_on_success" />
                            <div class="text-muted">
                                Play Sound On Product Succeed
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('pu_bm_is_notify_on_fail', '=', False )]}">
                        <div class="o_setting_left_pane">
                            <field name="pu_bm_is_sound_on_fail" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="pu_bm_is_sound_on_fail" />
                            <div class="text-muted">
                                Play Sound On Product Failed
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="res_config_settings_inv_accessright_view" model="ir.ui.view">
        <field name="name">res.config.settings.inv.accessright.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='process_transfers']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="mandatory_freeze_id" name="mandatory_freeze_name">
                    <div class="o_setting_left_pane">
                        <field name="mandatory_freeze_inventory"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="mandatory_freeze_inventory"/>
                        <div class="text-muted">
                            Location will be freezed whenever Stock Count in progress
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.stock.account</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="equip3_inventory_base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//h2[@name='inventory_adjustment_label']" position="replace">
                <h2 name="inventory_adjustment_label">Stock Count</h2>
            </xpath>
            <xpath expr="//div[@name='stock_inventory_validation_scheduler_description']" position="replace">
                <div class="text-muted" name="stock_inventory_validation_scheduler_description">
                    Process stock count validation in the background. (Recommended for large data).
                </div>
            </xpath>
            <xpath expr="//div[@name='stock_inventory_validation_per_batch_description']" position="replace">
                <div class="text-muted" name="stock_inventory_validation_per_batch_description">
                    Stock count lines per batch.
                </div>
            </xpath>
            <xpath expr="//h2[@name='inventory_adjustment_label']" position="before">
                <h2 name="stock_scrap_request_label">Product Usage</h2>
                <div class="row mt16 o_settings_container" name="stock_scrap_request_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="stock_scrap_validation_scheduler_container">
                        <div class="o_setting_left_pane">
                            <field name="stock_scrap_validation_scheduler"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="stock_scrap_validation_scheduler"/>
                            <div class="text-muted" name="stock_scrap_validation_scheduler_description">
                                Process product usage validation in the background. (Recommended for large data).
                            </div>
                            <div class="content-group" attrs="{'invisible': [('stock_scrap_validation_scheduler', '=', False)]}">
                                <div class="o_setting_box p-0">
                                    <div class="o_setting_left_pane w-100">
                                        <label for="stock_scrap_validation_per_batch" string="Lines per Batch"/>
                                        <div class="text-muted" name="stock_scrap_validation_per_batch_description">
                                            Product Usage lines per batch.
                                        </div>
                                    </div>
                
                                    <div class="o_setting_right_pane m-0">
                                        <field name="stock_scrap_validation_per_batch"/>
                                    </div>
                                </div>
                            </div>
    
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
