<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_category_form_view_inherit" model="ir.ui.view">
        <field name="model">product.category</field>
        <field name="inherit_id" ref="stock_account.view_category_property_form" />
        <field name="arch" type="xml">
            <xpath expr="//group/field[@name='property_stock_account_output_categ_id']"
                position="after">
                <field name="stock_scrap_account" groups="account.group_account_readonly" />
            </xpath>
        </field>
    </record>

    <record id="product_normal_form_view" model="ir.ui.view">
        <field name="name">product.product.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <field name="default_code" position="after">
                <field name="product_display_name" invisible="1" />
                <field name="is_low_stock" invisible="1" />
            </field>

        </field>
    </record>

</odoo>
