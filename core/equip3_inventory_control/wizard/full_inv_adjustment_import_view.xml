<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="full_inv_adjustment_import_view" model="ir.ui.view">
            <field name="name">Full Inv Adjustment Import View</field>
            <field name="model">full.inv.adjustment.import</field>
            <field name="arch" type="xml">
                <form string="Inventory Adjustment Import">
                    <div class="d-inline-flex" id="download_inv_adjustment_template">
                        <p attrs="{'invisible': ['|', ('import_type', '=', 'inv_stock'), ('import_type', '=', 'inv_with_value')]}">Download Import Stock Count Template</p>
                        <p attrs="{'invisible': ['|', ('import_type', '=', 'inv_value'), ('import_type', '=', 'inv_with_value')]}">Download Import Inventory Stock Template</p>

                        <div class="inv_adjustment_template" role="alert" attrs="{'invisible': ['|', ('import_type', '=', 'inv_stock'), ('import_type', '=', 'inv_with_value')]}" style="margin-left: 10px; margin-top: 0px;">
                            
                            <a
                                href="/equip3_inventory_control/static/sample_data/Inventory_Adjustment_Import_Template.xls"
                                target="_blank">
                                <strong>Stock Count Template</strong>
                            </a>
                        </div>

                        <div class="inv_stock_template" role="alert" attrs="{'invisible': ['|', ('import_type', '=', 'inv_value'), ('import_type', '=', 'inv_with_value')]}" style="margin-left: 10px; margin-top: 0px;">
                            <a
                                href="/equip3_inventory_control/static/sample_data/Inventory_Stock_Import_Template.xls"
                                target="_blank">
                                <strong>Inventory Stock Template</strong>
                            </a>
                        </div>
                    </div>
                    <br/>
                    <div class="d-inline-flex" id="import_file" style="margin-top: 20px;">
                        <p style="margin: 5px;" attrs="{'invisible': ['|', ('import_type', '=', 'inv_stock'), ('import_type', '=', 'inv_with_value')]}">Import Stock Count</p>
                        <p style="margin: 5px;" attrs="{'invisible': ['|', ('import_type', '=', 'inv_value'), ('import_type', '=', 'inv_with_value')]}">Import Stock </p>
                        <field name="import_file" filename="import_name" nolabel="1"/>
                    </div>
                    <br/>
                    <div class="d-inline-flex" id="export_file" style="margin-left: 270px; margin-top: 20px;">
                        <field name="is_export" invisible="1"/>
                        <field name="export_name" invisible="1"/>
                        <div class="export_file">
                            <field name="export_file" filename="export_name" readonly="1" nolabel="1" attrs="{'invisible': [('is_export', '=', False)]}"/>
                        </div>
                        <field name="import_name" invisible="1"/>
                        <field name="import_type" invisible="1"/>
                    </div>
                    <footer>
                        <button name="import_inv_adjustment" string="Confirm" type="object" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

       <record id="action_full_inv_adjustment_import" model="ir.actions.act_window">
              <field name="name">Import Stock Count</field>
              <field name="type">ir.actions.act_window</field>
              <field name="res_model">full.inv.adjustment.import</field>
              <field name="view_mode">form</field>
              <field name="context">{'default_import_type': 'inv_value'}</field>
              <field name="target">new</field>
        </record>

        <record id="action_full_inv_stock_import" model="ir.actions.act_window">
              <field name="name">Import Inventory Stock</field>
              <field name="type">ir.actions.act_window</field>
              <field name="res_model">full.inv.adjustment.import</field>
              <field name="view_mode">form</field>
              <field name="context">{'default_import_type': 'inv_stock'}</field>
              <field name="target">new</field>
        </record>

       <menuitem id="menu_root_import" 
                 name="Import" 
                 sequence="8" 
                 parent="stock.menu_stock_root"/>

       <menuitem id="menu_root_import_inventory_control" 
                 name="Inventory Control" 
                 sequence="2" 
                 parent="menu_root_import"/>

       <menuitem action="action_full_inv_adjustment_import" 
                 id="menu_full_inv_adjustment_import" 
                 parent="equip3_inventory_control.inventory_control_menu_categ" 
                 sequence="2"
                 active="False"
                 />

       <menuitem action="action_full_inv_stock_import" 
                 id="menu_full_inv_stock_import" 
                 parent="menu_accounting_inventory" 
                 sequence="2"/>

    </data>
</odoo>
