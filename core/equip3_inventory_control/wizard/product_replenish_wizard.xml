<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_product_replenish_view" model="ir.ui.view">
        <field name="name">product.replenish.view.inherit</field>
        <field name="model">product.replenish</field>
        <field name="inherit_id" ref="stock.view_product_replenish"/>
        <field name="arch" type="xml">
            <xpath expr="//group/field[@name='route_ids']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//p" position="replace">
                <p>
                    Use this assistant to replenish your stock. Choose an action to launch a replenishment of this product.
                </p>
            </xpath>
            <xpath expr="//group/field[@name='date_planned']" position="after">
                <field name="action_to_take" required="1"/>
            </xpath>
            <xpath expr="//group/field[@name='warehouse_id']" position="after">
                <field name="location_id" required="1" domain="[('id', 'in', filter_location_ids)]"/>
                <field name="filter_location_ids" widget="many2many_tags" invisible="1"/>
                <field name="supplier_id" attrs="{'invisible': [('action_to_take', '!=', 'create_rfq')], 'required': [('action_to_take', '=', 'create_rfq')]}"/>
                <field name="source_location_id" attrs="{'invisible': [('action_to_take', '!=', 'create_itr')], 'required': [('action_to_take', '=', 'create_itr')]}"/>
            </xpath>
            <xpath expr="//footer/button[@name='launch_replenishment']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//footer/button[@name='launch_replenishment']" position="before">
                <button name="action_replenish" string="Replenish" type="object" class="oe_highlight"/>
            </xpath>
        </field>
    </record>

</odoo>
