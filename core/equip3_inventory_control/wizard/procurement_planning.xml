<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="procurement_planning_form" model="ir.ui.view">
        <field name="name">procurement.planning.form</field>
        <field name="model">procurement.planning</field>
        <field name="arch" type="xml">
            <form string="Procurement Planning Form">
                <sheet string="Sheet name">
                    <group string="Filters">
                        <group expand="0" string="Choose Warehouse">
                            <field name="company_id" />
                            <field name="warehouse_id" required="1" />
                        </group>
                        <group expand="0" string="Parameters">
                            <group colspan="2">
                                <br/>
                                <span style="color: #50402F;"><b>Run Rate Period</b></span>
                                <div name="test_div" class="o_row">
                                    <field name="start_date" required="1" />
                                    <span style="color: #50402F;font-size: 16px;"><b>
                                        to
                                    </b></span>
                                    <field name="end_date" required="1" />
                                </div>
                            </group>
                            <group colspan="2">
                                <field name="lead_time" />
                                <label for="suggest_stock_period"/>
                                <div name="suggest_stock_period_div" class="o_row">
                                    <field name="suggest_stock_period" />
                                    <span>
                                        Days
                                    </span>
                                </div>
                            </group>
                        </group>
                    </group>
                    <group>
                        <group expand="0" string="Products &#038; Categories">
                            <field name="product_category_ids" widget="many2many_tags" />
                            <field name="product_ids" widget="many2many_tags" />
                        </group>
                        <group expand="0">
                        </group>

                    </group>
                </sheet>
                <footer>
                    <button name="view_data" string="View Data" type="object"
                        class="oe_highlight" />
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="procurement_planning_action" model="ir.actions.act_window">
        <field name="name">Procurement Planning Action</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">procurement.planning</field>
        <field name="view_id" ref="procurement_planning_form" />
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- <menuitem id="procurement_planning_menu"
        name="Procurement Planning"
        action="procurement_planning_action"
        parent="equip3_inventory_control.menu_root_control"
        sequence="2" /> -->

    <record id="procurement_planning_line_tree_views" model="ir.ui.view">
        <field name="name">procurement.planning.line.tree.views</field>
        <field name="model">procurement.planning.line</field>
        <field name="arch" type="xml">
            <tree string="Procurement Planning" create="false" edit="false">
                <field name="product_id" />
                <field name="quantity" />
                <field name="sold_quantity" />
                <field name="run_rate" />
                <field name="combined_field" />
                <field name="period" />
                <field name="next_order" />
                <field name="stock_order" />
                <field name="has_reordering_rules" invisible="1"/>
                <field name="stock_data" invisible="1"/>
                <button name="action_view_graph" type="object" class="oe_highlight" string="Show Graph" icon="fa-plus" attrs="{'invisible': [('has_reordering_rules', '!=', True)]}"/>
            </tree>
        </field>
    </record>

    <record id="procurement_planning_line_form_views" model="ir.ui.view">
        <field name="name">procurement.planning.line.form.views</field>
        <field name="model">procurement.planning.line</field>
        <field name="arch" type="xml">
            <form string="Procurement Planning" create="false" edit="false">
                <sheet>
                    <group>
                        <field name="product_id" />
                        <field name="quantity" />
                        <field name="sold_quantity" />
                        <field name="run_rate" />
                        <field name="combined_field" />
                        <field name="period" />
                        <field name="next_order" />
                        <field name="stock_order" />
                        <field name="has_reordering_rules" invisible="1"/>
                        <field name="stock_data" invisible="1"/>
                        <button name="action_view_graph" type="object" class="oe_highlight" string="Show Graph" icon="fa-plus" attrs="{'invisible': [('has_reordering_rules', '!=', True)]}"/>
                    </group>
                </sheet>

            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="procurement_planning_line_search">
        <field name="name">procurement.planning.line.search</field>
        <field name="model">procurement.planning.line</field>
        <field name="arch" type="xml">
            <search string="Procrement Planning Search">
                <field name="product_id"/>
                <group expand="0" string="Group By">
                    <filter string="Date" name="date_category" domain="[]"
                        context="{'group_by': 'next_order'}" />
                </group>
            </search>
        </field>
    </record>


</odoo>
