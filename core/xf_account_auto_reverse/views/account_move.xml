<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- code -->
        <record id="view_move_auto_reverse_form" model="ir.ui.view">
            <field name="name">view_move_auto_reverse_form</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="model">account.move</field>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page name="auto_reverse_page" string="Auto-Reverse">
                        <group name="auto_reverse_group">
                            <field name="auto_reverse"
                                   attrs="{
                                   'readonly': [('auto_reversed', '=', True)],
                                   'invisible': [('auto_reversed', '=', True)],
                                   }"/>
                            <field name="auto_reversed"
                                   attrs="{'invisible': [('auto_reversed', '!=', True)]}"/>
                            <field name="auto_reverse_date"
                                   attrs="{
                                   'readonly': [('auto_reversed', '=', True)],
                                   'invisible': [('auto_reverse', '!=', True)],
                                   'required': [('auto_reverse', '=', True)],
                                   }"/>
                            <label for="auto_reverse_date_mode"
                                   attrs="{
                                   'readonly': [('auto_reversed', '=', True)],
                                   'invisible': [('auto_reverse', '!=', True)],
                                   }"/>
                            <div class="o_row" attrs="{'invisible': [('auto_reverse', '!=', True)]}">
                                <field name="auto_reverse_date_mode" widget="radio" attrs="{'readonly': [('auto_reversed', '=', True)],}"/>
                                <field name="auto_reversal_entry_date"
                                       attrs="{
                                       'readonly': [('auto_reversed', '=', True)],
                                       'invisible': [('auto_reverse_date_mode', '!=', 'custom')],
                                       'required': [('auto_reverse', '=', True), ('auto_reverse_date_mode', '=', 'custom')],
                                       }"/>
                            </div>
                            <field name="auto_reverse_journal_id"
                                   attrs="{
                                   'readonly': [('auto_reversed', '=', True)],
                                   'invisible': [('auto_reverse', '!=', True)],
                                   }"/>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</odoo>