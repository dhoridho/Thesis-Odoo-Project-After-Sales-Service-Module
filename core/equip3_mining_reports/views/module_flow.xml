<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mining_module_flow_view_form" model="ir.ui.view">
        <field name="name">mining.module.flow.view.form</field>
        <field name="model">mining.module.flow</field>
        <field name="arch" type="xml">
            <form string="Module Flow">
                <script>
                    $(".o_control_panel").remove();
                </script>
                <style>
                    .no-bd {
                        background-color: transparent;
                        border: none;
                        outline: none;
                    }
                </style>
                <sheet>
                    <h1>Mining Module Flow</h1>
                    <div class="container">
                        <br/>
                        <br/>
                        <div class="row">
                            <div class="col-1">
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="action_menu_product" type="object" class="btn btn-light no-bd" width="100" height="100">
                                        <img src="/equip3_mining_reports/static/src/img/products.svg" width="60"/>
                                        <br/>
                                        Products
                                    </button>
                                </div>
                                <br/><br/><br/><br/>
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="action_menu_operations" type="object" class="btn btn-light no-bd" width="100" height="100">
                                        <img src="/equip3_mining_reports/static/src/img/operations.svg" width="60"/>
                                        <br/>
                                        Operations
                                    </button>
                                </div>
                                <br/><br/><br/><br/>
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="action_menu_worker_group" type="object" class="btn btn-light no-bd" width="100" height="100">
                                        <img src="/equip3_mining_reports/static/src/img/operations.svg" width="60"/>
                                        <br/>
                                        Woker Group
                                    </button>
                                </div>
                            </div>
                            <div class="col-1"></div>
                            <div class="col-1">
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="action_menu_mining_site" type="object" class="btn btn-light no-bd" width="100" height="100">
                                        <img src="/equip3_mining_reports/static/src/img/products.svg" width="60"/>
                                        <br/>
                                        Mining Site
                                    </button>
                                </div>
                                <br/><br/><br/><br/>
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="action_menu_planning" type="object" class="btn btn-light no-bd" width="100" height="100">
                                        <img src="/equip3_mining_reports/static/src/img/operations.svg" width="60"/>
                                        <br/>
                                        Planning
                                    </button>
                                </div>
                            </div>
                            <div class="col-1">
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="arrow" type="object" class="p-0" width="100" height="100" disabled="disabled">
                                        <i class="fa fa-arrow-right" style="font-size:4rem;"/>
                                    </button>
                                </div>
                                <br/><br/><br/><br/>
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="arrow" type="object" class="p-0" width="100" height="100" disabled="disabled">
                                        <i class="fa fa-arrow-right" style="font-size:4rem;"/>
                                    </button>
                                </div>
                            </div>
                            <div class="col-1">
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="action_menu_mining_pit" type="object" class="btn btn-light no-bd" width="100" height="100">
                                        <img src="/equip3_mining_reports/static/src/img/products.svg" width="60"/>
                                        <br/>
                                        Mining Pit
                                    </button>
                                </div>
                                <br/><br/><br/><br/>
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="action_menu_production_plan" type="object" class="btn btn-light no-bd" width="100" height="100">
                                        <img src="/equip3_mining_reports/static/src/img/operations.svg" width="60"/>
                                        <br/>
                                        Production Plan
                                    </button>
                                </div>
                            </div>
                            <div class="col-1">
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="arrow" type="object" class="p-0" width="100" height="100" disabled="disabled"/>
                                </div>
                                <br/><br/><br/><br/>
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="arrow" type="object" class="p-0" width="100" height="100" disabled="disabled">
                                        <i class="fa fa-arrow-right" style="font-size:4rem;"/>
                                    </button>
                                </div>
                            </div>
                            <div class="col-1">
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="arrow" type="object" class="p-0" width="100" height="100" disabled="disabled"/>
                                </div>
                                <br/><br/><br/><br/>
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="action_menu_production_lines" type="object" class="btn btn-light no-bd" width="100" height="100">
                                        <img src="/equip3_mining_reports/static/src/img/operations.svg" width="60"/>
                                        <br/>
                                        Production lines
                                    </button>
                                </div>
                            </div>
                            <div class="col-1">
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="arrow" type="object" class="p-0" width="100" height="100" disabled="disabled"/>
                                </div>
                                <br/><br/><br/><br/>
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="arrow" type="object" class="p-0" width="100" height="100" disabled="disabled">
                                        <i class="fa fa-arrow-right" style="font-size:4rem;"/>
                                    </button>
                                </div>
                            </div>
                            <div class="col-1">
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="arrow" type="object" class="p-0" width="100" height="100" disabled="disabled"/>
                                </div>
                                <br/><br/><br/><br/>
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="action_menu_actualization" type="object" class="btn btn-light no-bd" width="100" height="100">
                                        <img src="/equip3_mining_reports/static/src/img/operations.svg" width="60"/>
                                        <br/>
                                        Actualization
                                    </button>
                                </div>
                                <br/>
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="arrow" type="object" class="p-0" width="100" height="100" disabled="disabled">
                                        <i class="fa fa-arrow-right" style="font-size:4rem; transform:rotate(-90deg);"/>
                                    </button>
                                </div>
                                <br/>
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="action_menu_fuel_logs" type="object" class="btn btn-light no-bd" width="100" height="100">
                                        <img src="/equip3_mining_reports/static/src/img/operations.svg" width="60"/>
                                        <br/>
                                        Fuel logs
                                    </button>
                                </div>
                            </div>
                            <div class="col-1"></div>
                            <div class="col-1">
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="action_menu_production_report" type="object" class="btn btn-light no-bd" width="100" height="100">
                                        <img src="/equip3_mining_reports/static/src/img/reporting.svg" width="60"/>
                                        <br/>
                                        Production Report
                                    </button>
                                </div>
                                <br/><br/>
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="action_menu_asset_production_report" type="object" class="btn btn-light no-bd" width="100" height="100">
                                        <img src="/equip3_mining_reports/static/src/img/reporting.svg" width="60"/>
                                        <br/>
                                        Asset Production Report
                                    </button>
                                </div>
                                <br/><br/>
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="action_menu_stripping_ratio_report" type="object" class="btn btn-light no-bd" width="100" height="100">
                                        <img src="/equip3_mining_reports/static/src/img/reporting.svg" width="60"/>
                                        <br/>
                                        Stripping Ratio Report
                                    </button>
                                </div>
                                <br/><br/>
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="action_menu_fuel_ratio_report" type="object" class="btn btn-light no-bd" width="100" height="100">
                                        <img src="/equip3_mining_reports/static/src/img/reporting.svg" width="60"/>
                                        <br/>
                                        Fuel Ratio Report
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="mining_module_flow_action" model="ir.actions.act_window">
        <field name="name">Module Flow</field>
        <field name="res_model">mining.module.flow</field>
        <field name="view_mode">form</field>
    </record>

</odoo>
