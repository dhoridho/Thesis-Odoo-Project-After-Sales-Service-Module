<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_mining_tab_product_tmpl_view_id" model="ir.ui.view">
        <field name="name">product.template.inherit.view.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="equip3_mining_operations.inherit_mining_tab_product_tmpl_view_id"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='mining']/group[1]" position="inside">
                <group>
                    <field name="mining_economic_product" attrs="{'invisible': [('mining_product_type', '!=', 'product')]}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>