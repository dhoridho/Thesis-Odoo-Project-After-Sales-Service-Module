<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res_config_settings_mining_view_form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="equip3_mining_operations.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='equip3_mining_accessright_settings']" position="inside">
                <h2>Mining Reports</h2>
                <div class="row mt16 o_settings_container" name="mining_report_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="mining_report_precision_rounding">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <label for="mining_report_precision_rounding" string="Precision Rounding"/>
                                <field name="mining_report_precision_rounding" class="oe_inline"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>