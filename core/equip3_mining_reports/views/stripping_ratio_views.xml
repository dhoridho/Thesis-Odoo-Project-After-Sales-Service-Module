<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_stripping_ratio_tree" model="ir.ui.view">
        <field name="name">view_stripping_ratio_tree</field>
        <field name="model">mining.stripping.ratio</field>
        <field name="arch" type="xml">
            <tree string="Stripping Ratio">
                <field name="site_id"/>
                <field name="waste_operation_id"/>
                <field name="waste_ids" widget="many2many_tags"/>
                <field name="ore_operation_id"/>
                <field name="ore_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="view_stripping_ratio_form" model="ir.ui.view">
        <field name="name">view_stripping_ratio_form</field>
        <field name="model">mining.stripping.ratio</field>
        <field name="arch" type="xml">
            <form string="Stripping Ratio">
                <sheet>
                    <group>
                        <group>
                            <field name="site_id" required="1" options="{'no_create': True, 'no_create_edit':True}"/>
                            <field name="waste_operation_id" required="1" options="{'no_create': True, 'no_create_edit':True}"/>
                            <field name="waste_ids" widget="many2many_tags" required="1" options="{'no_create': True, 'no_create_edit':True}"/>
                            <field name="ore_operation_id" required="1" options="{'no_create': True, 'no_create_edit':True}"/>
                            <field name="ore_ids" widget="many2many_tags" required="1" options="{'no_create': True, 'no_create_edit':True}"/>
                        </group>
                        <group>
                            <field name="allowed_operation_ids" widget="many2many_tags" invisible="1"/>
                            <field name="allowed_waste_ids" widget="many2many_tags" invisible="1"/>
                            <field name="allowed_ore_ids" widget="many2many_tags" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_view_stripping_ratio" model="ir.actions.act_window">
        <field name="name">Stripping Ratio</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mining.stripping.ratio</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Stripping Ratio!
            </p>
        </field>
    </record>

</odoo>