<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="delivery_type_sale_view_tree" model="ir.ui.view">
        <field name="name">delivery.type.sale.view.tree</field>
        <field name="model">delivery.type.sale</field>
        <field name="arch" type="xml">
            <tree editable="bottom" string="Delivery Type">
                <field name="name" />
                <field name="active" />
            </tree>
        </field>
    </record>

    <record id="delivery_type_sale_action" model="ir.actions.act_window">
        <field name="name">Delivery Type</field>
        <field name="res_model">delivery.type.sale</field>
        <field name="view_mode">tree</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_views_nocontent_create">
                Click to add a new data.
            </p>
        </field>
    </record>

    <menuitem name="Delivery Type"
        id="menu_delivery_type_sale"
        parent="equip3_sale_masterdata.menu_sale_config_config"
        action="delivery_type_sale_action"
        sequence="-10"/>

</odoo>
