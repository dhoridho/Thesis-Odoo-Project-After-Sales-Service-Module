<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_form_inherit" model="ir.ui.view">
        <field name="name">view.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="delivery_type_id" invisible="1"/>
                <field name="delivery_type" />
                <field name="npwp" />
                <field name="attachment_type" />
                <field name="file" nolabel="1" attrs="{'invisible':[('attachment_type','!=','file')]}" />
                <field name="url" nolabel="1" widget="url" attrs="{'invisible':[('attachment_type','!=','url')]}" />
            </xpath>
            <xpath expr="//field[@name='order_line']//tree/field[@name='name']" position="after">
                <field name="brand_ids" widget="many2many_tags"/>
            </xpath>
            <xpath expr="//div[@name='is_dropship']" position="after">
                <label for="inden" string="Inden" modifiers="{}"/>
				<div class="o_row" name="inden" modifiers="{}">
					<field name="inden" nolabel="1" style="margin-right:20px;" modifiers="{'readonly':[['state','not in',['draft']]]}" id="inden"/>
					<span modifiers="{}">
						Inden
					</span>
				</div>
                <field name="po_customer" />
                <field name="is_partner_hs_code" invisible="1"/>
            </xpath>
        </field>
    </record>

</odoo>
