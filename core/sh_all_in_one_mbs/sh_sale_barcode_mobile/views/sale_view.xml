<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_sale_barcode_mobile_sale_view_order_form" model="ir.ui.view">
        <field name="name">sh.sale.barcode.mobile.sale.view.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="inside">
                <group attrs="{'invisible': [('state', 'in', ['cancel','done'] )]}">
                    <label for="sh_sale_barcode_mobile"/>
                    <div class="o_row">
                        <field name="sh_sale_barcode_mobile" />
                        <a role="button" class="btn btn-primary oe_edit_only o_mbs_start_button" id="js_id_sh_sale_barcode_mobile_start_btn">
                            <i class="fa fa-barcode"></i> Start
                        </a>
                        <a role="button" style="display: none;" class="btn btn-danger oe_edit_only o_mbs_stop_button" id="js_id_sh_sale_barcode_mobile_reset_btn">
                            <i class="fa fa-barcode"></i> Stop
                        </a>
                    </div>
                    <field name="sh_sale_bm_is_cont_scan" invisible="1"/>
                </group>
            </xpath>

            <xpath expr="//notebook" position="before">
                <script type="text/javascript" src="/sh_all_in_one_mbs/static/src/js/ZXing.js"></script>
                <script type="text/javascript" src="/sh_all_in_one_mbs/static/src/js/sh_sale_barcode_mobile.js"></script>

                <section class="o_mb_section oe_edit_only" attrs="{'invisible': [('state', 'in', ['cancel','done'] )]}">
                    <div class="o_mbs_video_container" id="js_id_sh_sale_barcode_mobile_vid_div" style="display: none;">
                        <div class="o_mbs_cam_selector">
                            <strong class="o_mbs_label">Camera</strong>
                            <select class="o_input" id="js_id_sh_sale_barcode_mobile_cam_select"/>
                        </div>
                        <video id="video" class="cls_sh_all_in_one_mbs_video_tag" width="600" height="400" style="border: 1px solid gray;"></video>
                        <span style="display: block;">Result:</span>
                        <code id="js_id_sh_sale_barcode_mobile_result"></code>
                    </div>
                </section>
            </xpath>
        </field>
    </record>
</odoo>
