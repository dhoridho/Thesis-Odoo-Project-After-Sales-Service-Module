<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="sh_product_custom_mb_product_variant_form_view" model="ir.ui.view">
        <field name="name">sh.product.custom.mb.product.variant.form.view</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">

            <xpath expr="//page[@name='general_information']/group" position="inside">
                <script type="text/javascript" src="/sh_all_in_one_mbs/static/src/js/ZXing.js"></script>
                <script type="text/javascript" src="/sh_all_in_one_mbs/static/src/js/sh_product_custom_mb.js"></script>

                <section class="o_mb_section oe_edit_only">
                    <a role="button" class="btn btn-primary oe_edit_only o_mbs_start_button" id="js_id_sh_product_custom_mb_start_btn" style="margin-left: 0 !Important;">
                        <i class="fa fa-barcode"></i> Start
                    </a>
                    <a role="button" style="display: none;" class="btn btn-danger oe_edit_only o_mbs_stop_button" id="js_id_sh_product_custom_mb_reset_btn">
                        <i class="fa fa-barcode"></i> Stop
                    </a>

                    <div class="o_mbs_video_container" id="js_id_sh_product_custom_mb_vid_div" style="display: none;">
                        <table class="o_group o_inner_group">
                            <tbody>
                                <tr>
                                    <td style="width: 50%; padding-right: 0 !important;">
                                        <strong class="o_mbs_label">Field</strong>
                                        <select class="o_input o_fixed_height mb-2" id="js_id_sh_product_custom_mb_field_select">
                                            <option value="barcode">Barcode</option>
                                            <option value="sh_qr_code">QR Code</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width: 50%; padding-right: 0 !important;">
                                        <strong class="o_mbs_label">Camera</strong>
                                        <select class="o_input o_fixed_height" id="js_id_sh_product_custom_mb_cam_select"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <video id="video" class="cls_sh_all_in_one_mbs_video_tag" width="600" height="400" style="border: 1px solid gray;"></video>
                        <span style="display: block;">Result:</span>
                        <code id="js_id_sh_product_custom_mb_result"></code>
                    </div>
                </section>
            </xpath>


        </field>
    </record> 

    <record id="sh_product_custom_mb_product_template_form_view" model="ir.ui.view">
        <field name="name">sh.product.custom.mb.product.template.form.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">


            <xpath expr="//page[@name='general_information']/group" position="inside">
                <script type="text/javascript" src="/sh_all_in_one_mbs/static/src/js/ZXing.js"></script>
                <script type="text/javascript" src="/sh_all_in_one_mbs/static/src/js/sh_product_custom_mb.js"></script>

                <section class="o_mb_section oe_edit_only">
                    <a role="button" class="btn btn-primary oe_edit_only o_mbs_start_button" id="js_id_sh_product_custom_mb_start_btn" style="margin-left: 0 !Important;">
                        <i class="fa fa-barcode"></i> Start
                    </a>
                    <a role="button" style="display: none;" class="btn btn-danger oe_edit_only o_mbs_stop_button" id="js_id_sh_product_custom_mb_reset_btn">
                        <i class="fa fa-barcode"></i> Stop
                    </a>

                    <div class="o_mbs_video_container" id="js_id_sh_product_custom_mb_vid_div" style="display: none;">
                        <table class="o_group o_inner_group">
                            <tbody>
                                <tr>
                                    <td style="width: 50%; padding-right: 0 !important;">
                                        <strong class="o_mbs_label">Field</strong>
                                        <select class="o_input o_fixed_height mb-2" id="js_id_sh_product_custom_mb_field_select">
                                            <option value="barcode">Barcode</option>
                                            <option value="sh_qr_code">QR Code</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width: 50%; padding-right: 0 !important;">
                                        <strong class="o_mbs_label">Camera</strong>
                                        <select class="o_input o_fixed_height" id="js_id_sh_product_custom_mb_cam_select"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <video id="video" class="cls_sh_all_in_one_mbs_video_tag" width="600" height="400" style="border: 1px solid gray;"></video>
                        <span style="display: block;">Result:</span>
                        <code id="js_id_sh_product_custom_mb_result"></code>
                    </div>
                </section>
            </xpath>

        </field>
    </record>
    
    
</odoo>
