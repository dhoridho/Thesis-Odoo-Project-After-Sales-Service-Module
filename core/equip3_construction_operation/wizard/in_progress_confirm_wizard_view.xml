<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="in_progress_confirm_wizard_view_form" model="ir.ui.view">
        <field name="name">in.progress.confirm.const</field>
        <field name="model">in.progress.confirm.const</field>
        <field name="arch" type="xml">
            <form string="Confirmation">
                <group>
                    <group>
                        <field name="project_id" invisible="1"/>
                        <field name="project_task_id" invisible="1"/>
                        <field name="actual_start_date"/>
                    </group>
                </group>

                <footer>
                    <button name="confirm" string="Confirm" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>