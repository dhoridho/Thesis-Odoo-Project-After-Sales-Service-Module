<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="force_start_project_task_wizard_view_form" model="ir.ui.view">
        <field name="name">force.start.project.task.const</field>
        <field name="model">force.start.project.task.const</field>
        <field name="arch" type="xml">
            <form string="Confirmation">
                    <field name="actual_start_date" widget="date" invisible="1"/>
                    <field name="project_task_id" invisible="1"/>
                    <field name="warning" nolabel="1" readonly="1"/>
                    <group>
                        <field name="finish_to_start_issue_ids" nolabel="1">
                            <tree create="false" editable="bottom">
                                <field name="project_task_id" invisible="1"/>
                                <field name="parent_task_id"/>
                                <!-- <field name="actual_start_date"/>
                                <field name="actual_end_date"/> -->
                                <field name="lag_qty"/>
                                <field name="lag_type"/>
                                <field name="reason"/>
                            </tree>
                        </field>
                    </group>
                <footer>
                    <button name="confirm" string="Force Start" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>