<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="complete_confirm_wiz_view_form" model="ir.ui.view">
        <field name="name">complete.confirm.wiz</field>
        <field name="model">complete.confirm.wiz</field>
        <field name="arch" type="xml">
            <form string="Confirmation">
                <group>
                    <field name="txt" nolabel="1" readonly="1"/>
                </group>
                <group>
                    <field name="reason" required="1"/>
                </group>
                <footer>
                    <button name="yes_button" string="Yes" type="object" class="oe_highlight"/>
                    <button string="No" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>