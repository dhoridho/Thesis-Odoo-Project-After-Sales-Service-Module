<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="progress_history_approval__wizard_view" model="ir.ui.view">
        <field name="name">progress.history.approval.wizard.view</field>
        <field name="model">progress.history.approval.wizard</field>
        <field name="arch" type="xml">
            <form string="Progress History Approval  Wizard">
                <group>
                    <field name="project_id" invisible="1"/>
                    <field name="work_order" invisible="1"/>
                    <field name="warning" nolabel="1" readonly="1"/>
                    <field name="is_approve" invisible="1"/>
                    <field name="is_rejectable" invisible="1"/>
                </group>
                <footer>
                    <button string="Confirm" class="oe_highlight" special="cancel"/>
                    <!-- <button string="Confirm" class="oe_highlight" special="cancel" 
                    attrs="{ 'invisible': ['|',('is_approve', '=', False), ('is_rejectable', '=', True)] }"
                    />
                    <button string="Continue" class="oe_highlight" type="object" name="action_confirm"
                    attrs="{ 'invisible': ['|', ('is_approve', '=', True), ('is_rejectable', '=', False)] }"
                    /> -->
                </footer>
            </form>
        </field>
    </record>
</odoo>