<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="labour_usage_confirmation_wizard_form_view" model="ir.ui.view">
        <field name="name">labour.usage.confirmation.wizard</field>
        <field name="model">labour.usage.confirmation.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirmation">
                    <field name="warning_text" nolabel="1" readonly="1"/>
                    <field name="project_task_id" readonly="1" invisible="1"/>
                <footer>
                    <button name="confirm" string="Continue" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>