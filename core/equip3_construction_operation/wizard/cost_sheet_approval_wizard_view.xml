<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="cost_sheet_approval_view_form" model="ir.ui.view">
        <field name="name">cost.sheet.approvel.view.form</field>
        <field name="model">cost.sheet.approval.wizard</field>
        <field name="arch" type="xml">
            <form string="Cost Sheet Wizard">
                <sheet>
                    <group>
                        <group>
                            <field name="project_id" readonly="1" force_save='1'/>
                            <field name="job_sheet_id" invisible="1" readonly="1"/>
                            <field name="act_start_date_proj" invisible='1' force_save='1'/>
                            <field name="act_start_date" attrs="{'required': [('act_start_date_proj', '=', False)], 'readonly': [('act_start_date_proj', '!=', False)]}" force_save="1"/>
                            <field name="budgeting_method" required="1"/>
                            <field name="budgeting_period" required="1"/>
                            <field name="period" domain="[('project', '=', project_id)]" attrs="{ 'invisible': [('budgeting_period', '!=', 'monthly')], 'required': [('budgeting_period', '=', 'monthly')] }" readonly="1" force_save="1"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="project_scope_computed" widget="many2many_tags" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="project_budget_ids" attrs="{ 'invisible': [('budgeting_period', 'not in', ('monthly', 'custom'))] }">
                            <tree editable="bottom">
                                <field name="project_id" invisible="1"/>
                                <field name="budgeting_period" invisible="1"/>
                                <field name="period" invisible="1" force_save="1"/>
                                <field name="month" attrs="{'column_invisible':[('parent.budgeting_period','=', 'custom')], 'required': [('budgeting_period','=', 'monthly')]}" options="{'no_create':True, 'no_quick_create':True, 'no_create_edit':True}"/>
                                <field name="bd_start_date" attrs="{'column_invisible': [('parent.budgeting_period', '!=', 'custom')], 'required': [('budgeting_period', '=', 'custom')] }"/>
                                <field name="bd_end_date" attrs="{'column_invisible': [('parent.budgeting_period', '!=', 'custom')], 'required': [('budgeting_period', '=', 'custom')] }"/>
                                <field name="project_scope" domain="[('id','in',parent.project_scope_computed)]" widget="many2many_tags" 
                                       options="{'no_create':True, 'no_quick_create':True, 'no_create_edit':True}"/>
                                <field name="project_section_computed" widget="many2many_tags" invisible="1"/>
                                <field name="section_name" widget="many2many_tags"
                                       options="{'no_create':True, 'no_quick_create':True, 'no_create_edit':True}"/>
                                <field name="variable_ref" widget="many2many_tags" invisible="1"
                                       options="{'no_create':True, 'no_quick_create':True, 'no_create_edit':True}"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button name="action_approved" string="Confirm" type="object" class="oe_highlight"/>
                        <!-- <button name="action_cancel" string="Cancel" type="object" class="btn-secondary"/> -->
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>