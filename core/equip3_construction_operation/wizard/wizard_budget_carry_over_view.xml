<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_budget_carry_over_view_form" model="ir.ui.view">
        <field name="name">wizard.budget.carry.over.view.form</field>
        <field name="model">wizard.budget.carry.over</field>
        <field name="arch" type="xml">
            <form string="Budget Carry Over">
                <group>
                    <field name="project_budget_id"/>
                    <field name="project_id" invisible='1'/>
                    <field name="department_type" invisible='1'/>
                    <field name="company_id" invisible='1'/>
                    <field name="budget_default_id" invisible='1'/>
                    <field name="budget_carry_over_approval_matrix" invisible='1'/>
                    <field name="branch_id" invisible='1'/>
                    <field name="approving_matrix_budget_carry_id" invisible='1'/>
                </group>
                <notebook>
                    <page string="Material Estimation">
                        <field name="wizard_material_estimation_ids" widget="one2many">
                            <tree editable="bottom">
                                <field name="bd_material_id" readonly="1" force_save="1"/>
                                <field name="sr_no"/>
                                <field name="date"/>
                                <field name="project_scope_id"/>
                                <field name="section_name_id"/>
                                <field name="variable_id"/>
                                <field name="group_of_product_id"/>
                                <field name="product_id"/>
                                <field name="description"/>
                                <field name="quantity" force_save="1"/>
                                <field name="uom_id"/>
                                <field name="unit_price" readonly="1" force_save="1"/>
                                <field name="total_amount" string="Budget Amount" readonly="1" force_save="1"/>
                                <field name="amount" string="Budget Amount Left" readonly="1" force_save="1"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Labour Estimation">
                        <field name="wizard_labour_estimation_ids" widget="one2many">
                            <tree editable="bottom">
                                <field name="bd_labour_id" readonly="1" force_save="1"/>
                                <field name="sr_no"/>
                                <field name="date"/>
                                <field name="project_scope_id"/>
                                <field name="section_name_id"/>
                                <field name="variable_id"/>
                                <field name="group_of_product_id"/>
                                <field name="product_id"/>
                                <field name="description"/>
                                <field name="contractors"/>
                                <field name="time"/>
                                <field name="uom_id"/>
                                <field name="unit_price" readonly="1" force_save="1"/>
                                <field name="total_amount" string="Budget Amount" readonly="1" force_save="1"/>
                                <field name="amount"  string="Budget Amount Left" readonly="1" force_save="1"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Asset Estimation">
                        <notebook>
                            <page string="Internal Asset">
                                <field name="wizard_internal_asset_estimation_ids" widget="one2many">
                                    <tree editable="bottom">
                                        <field name="bd_internal_asset_id" readonly="1" force_save="1"/>
                                        <field name="sr_no"/>
                                        <field name="date"/>
                                        <field name="project_scope_id"/>
                                        <field name="section_name_id"/>
                                        <field name="variable_id"/>
                                        <field name="group_of_product_id" invisible="1"/>
                                        <field name="asset_category_id"/>
                                        <field name="asset_id"/>
                                        <field name="description"/>
                                        <field name="quantity"/>
                                        <field name="uom_id"/>
                                        <field name="unit_price" readonly="1" force_save="1"/>
                                        <field name="total_amount" string="Budget Amount" readonly="1" force_save="1"/>
                                        <field name="amount" string="Budget Amount Left" readonly="1" force_save="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Equipment Lease Estimation">
                                <field name="wizard_equipment_lease_estimation_ids" widget="one2many">
                                    <tree editable="bottom">
                                        <field name="bd_equipment_id" readonly="1" force_save="1"/>
                                        <field name="sr_no"/>
                                        <field name="date"/>
                                        <field name="project_scope_id"/>
                                        <field name="section_name_id"/>
                                        <field name="variable_id"/>
                                        <field name="group_of_product_id"/>
                                        <field name="product_id"/>
                                        <field name="description"/>
                                        <field name="quantity"/>
                                        <field name="uom_id"/>
                                        <field name="unit_price" readonly="1" force_save="1"/>
                                        <field name="total_amount" string="Budget Amount" readonly="1" force_save="1"/>
                                        <field name="amount" string="Budget Amount Left" readonly="1" force_save="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </page>
                    <page string="Overhead Estimation">
                        <field name="wizard_budget_carry_overhead_ids">
                            <tree editable="bottom">
                                <field name="bd_overhead_id" readonly="1" force_save="1"/>
                                <field name="sr_no"/>
                                <field name="date"/>
                                <field name="project_scope_id"/>
                                <field name="section_name_id"/>
                                <field name="variable_id"/>
                                <field name="overhead_category"/>
                                <field name="group_of_product_id"/>
                                <field name="product_id"/>
                                <field name="description"/>
                                <field name="quantity"/>
                                <field name="uom_id"/>
                                <field name="unit_price" readonly="1" force_save="1"/>
                                <field name="total_amount" string="Budget Amount" readonly="1" force_save="1"/>
                                <field name="amount" string="Budget Amount Left" readonly="1" force_save="1"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Subcon Estimation">
                        <field name="wizard_subcon_estimation_ids">
                            <tree editable="bottom">
                                <field name="bd_subcon_id" readonly="1" force_save="1"/>
                                <field name="date"/>
                                <field name="project_scope_id"/>
                                <field name="section_name_id"/>
                                <field name="variable_id"/>
                                <field name="group_of_product_id" invisible="1"/>
                                <field name="subcon_id"/>
                                <field name="description"/>
                                <field name="quantity"/>
                                <field name="uom_id"/>
                                <field name="unit_price" readonly="1" force_save="1"/>
                                <field name="total_amount" string="Budget Amount" readonly="1" force_save="1"/>
                                <field name="amount" string="Budget Amount Left" readonly="1" force_save="1"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button name="submit" string="Submit" type="object" class="oe_highlight" attrs="{'invisible': [('budget_carry_over_approval_matrix','=',True)]}"/>
                    <button name="submit" string="Request For Approval" type="object" class="oe_highlight" attrs="{'invisible': [('budget_carry_over_approval_matrix','=',False)]}"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="wizard_budget_carry_over_action" model="ir.actions.act_window">
        <field name="name">Budget Carry Over</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wizard.budget.carry.over</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="wizard_budget_carry_over_view_form"/>
        <field name="target">new</field>
    </record>
</odoo>