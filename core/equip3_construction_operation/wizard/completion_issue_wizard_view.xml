<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="completion_issue_view_form" model="ir.ui.view">
        <field name="name">completion.issue.wizard</field>
        <field name="model">completion.issue.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="actual_end_date" invisible="1" widget="date"/>
                        <field name="project_task_id" invisible="1"/>
                        <field name="issues_solved" invisible="1"/>
                        <field name="warning_top" nolabel="1" class="mb-3"/>
                    </group>
                        <field name="issue_ids" readonly="1" nolabel="1">
                             <tree create="false" editable="bottom">
                                <field name="project_task_id" invisible="1"/>
                                <field name="completion_issue_wizard_id" invisible="1"/>
                                <field name="parent_task_id"/>
                                <field name="actual_start_date"/>
                                <field name="actual_end_date"/>
                                <field name="type"/>
                                <field name="lag_qty"/>
                                <field name="lag_type"/>
                                <field name="reason"/>
                                <field name="is_draft" invisible="1"/>
                                <field name="is_solved" invisible="1"/>
                                <field name="is_time_conflict" invisible="1"/>
                                <button name="button_force_start" string="Force Start" type="object" class="oe_highlight"
                                        attrs="{ 'invisible': ['|',('is_draft', '=', False),('is_solved', '=', True)] }"/>
                                <button name="button_force_complete" string="Force Complete" type="object" class="oe_highlight"
                                        attrs="{ 'invisible': ['|','|','|', ('is_draft', '=', True),('is_solved', '=', True),('is_time_conflict', '=', True),('type', '=', 'SF')] }"/>
                            </tree>
                        </field>
                        <group>
                            <group>
                                <field name="warning_bottom" nolabel="1" class="mt-3"/>
                            </group>
                            <group>
                                <button string="Force Complete" name="action_force_complete_current" type="object" class="oe_highlight"/>
                            </group>
                        </group>
                    <footer>
                        <button name="action_force_start_and_complete" string="Force All Job Order" type="object" class="oe_highlight"
                        attrs="{ 'invisible': [('issues_solved', '=', True)] }"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>