<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_approval_matrix_progress_reject_reject_const" model="ir.ui.view">
        <field name="name">approval.matrix.progress.reject.form</field>
        <field name="model">approval.matrix.progress.reject</field> 
        <field name="arch" type="xml">
            <form string="Reason">
                <group>
                    <field name="job_id" invisible="1"/>
