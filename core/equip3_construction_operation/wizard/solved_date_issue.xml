<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="solve_issue_date_wizard_view_form" model="ir.ui.view">
        <field name="name">solve.issue.date</field>
        <field name="model">solve.issue.date</field>
        <field name="arch" type="xml">
            <form string="Solved Date">
                <group>
                    <group>
                        <field name="solved_date" widget="date"/>
                        <field name="issue_id" invisible="1"/>
                    </group>
                </group>

                <footer>
                    <button name="confirm" string="Confirm" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>