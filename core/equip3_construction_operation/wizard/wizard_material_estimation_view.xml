<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <!-- Form View -->
    <record id="wizard_material_estimation_form_view" model="ir.ui.view">
        <field name="name">wizard.material.estimation.form.view</field>
        <field name="model">wizard.material.estimation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group readonly="1">
                        <group>
                            <field name="sr_no"/>
                            <field name="date"/>
                            <field name="project_scope_id" required="1"/>
                            <field name="section_name_id" required="1"/>
                            <field name="variable_id"/>
                        </group>
                        <group>
                            <field name="group_of_product_id" required="1"/>
                            <field name="product_id" required="1"/>
                            <field name="description"/>
                            <field name="quantity"/>
                            <field name="amount"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="wizard_material_estimation_tree_view" model="ir.ui.view">
        <field name="name">wizard.material.estimation.tree.view</field>
        <field name="model">wizard.material.estimation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sr_no"/>
                <field name="date"/>
                <field name="project_scope_id"/>
                <field name="section_name_id"/>
                <field name="variable_id"/>
                <field name="group_of_product_id"/>
                <field name="product_id"/>
                <field name="description"/>
                <field name="quantity"/>
                <field name="amount"/>
            </tree>
        </field>
    </record>

    <record id="wizard_material_estimation_action" model="ir.actions.act_window">
        <field name="name">Material Estimation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wizard.material.estimation</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>