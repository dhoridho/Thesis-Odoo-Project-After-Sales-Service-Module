<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="progress_history_deletion_wizard_view" model="ir.ui.view">
        <field name="name">progress.history.deletion.wizard.view</field>
        <field name="model">progress.history.deletion.wizard</field>
        <field name="arch" type="xml">
            <form string="Delete Progress History">
                <sheet>
                    <group>
                        <field name="txt" nolabel="1" readonly="1"/>
                        <field name="current_progress" invisible="1"/>
                    </group>
                    <footer>
                        <button name="delete_progress_history" string="Delete" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                 </sheet>   
            </form>
        </field>
    </record>
</odoo>