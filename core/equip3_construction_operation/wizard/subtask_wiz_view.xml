<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="create_subtask_wiz_view_form" model="ir.ui.view">
        <field name="name">create.subtask.wiz</field>
        <field name="model">create.subtask.wiz</field>
        <field name="arch" type="xml">
            <form string="Create Subtasks">
                <sheet>
                    <field name="txt" nolabel="1" readonly="1"/>
                    <group>
                        <group>
                            <field name="parent_task" force_save="1" readonly="1"/>
                            <field name="subtask_planned_hours" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="subtasks_ids" nolabel="1" widget="one2many_list" class="o_subtasks_wiz">
                            <tree editable='bottom'>
                                <control>
                                    <create name="add_product_control" string="Add a subtask"/>
                                </control>
                                <field name="name" required="1"/>
                                <field name="description" />
                                <field name="assigned_to" />
                                <field name="assigned_date" />
                                <field name="planned_start_date" required="1" style="width: 130px;"/>
                                <field name="planned_end_date" required="1" style="width: 130px;"/>
                                <field name="work_subtask_weightage" />
                                <field name="planned_hour" widget="timesheet_uom_no_toggle"/>
                            </tree>
                        </field> 
                    </group>
                </sheet>
                <footer>
                    <button name="create_subtask" string="Create" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>            
            </form>
        </field>
    </record>

</odoo>