<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="project_task_completion_wizard_view_form" model="ir.ui.view">
        <field name="name">project.task.completion.wizard</field>
        <field name="model">project.task.completion.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirmation">
                <group>
                    <group>
                        <field name="actual_end_date" widget="date"/>
                        <field name="project_task_id" invisible="1"/>
                    </group>
                </group>
                <footer>
                    <button name="confirm" string="Confirm" type="object" class="oe_highlight"/>
                    <button name="action_cancel" string="Cancel" type="object" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>