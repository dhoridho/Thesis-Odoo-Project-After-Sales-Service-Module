<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inprogress_issue_wizard_wizard_view_form" model="ir.ui.view">
        <field name="name">inprogress.issue.wizard</field>
        <field name="model">inprogress.issue.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirmation">
                    <field name="actual_start_date" widget="date" invisible="1"/>
                    <field name="project_task_id" invisible="1"/>
                    <field name="warning" nolabel="1" readonly="1"/>
                    <group>
                        <field name="inprogress_issue_ids" nolabel="1">
                            <tree create="false" editable="bottom">
                                <field name="project_task_id" invisible="1"/>
                                <field name="parent_task_id"/>
                                <field name="actual_start_date"/>
                                <field name="actual_end_date"/>
                                <field name="type"/>
                                <field name="lag_qty"/>
                                <field name="lag_type"/>
                                <field name="reason"/>
                                <field name="is_draft" invisible="1"/>
                                <field name="is_solved" invisible="1"/>
                                <field name="is_time_conflict" invisible="1"/>
                                <button string="Force Start" name="action_force_start" type="object" class="oe_highlight"
                                attrs="{ 'invisible': ['|',('is_draft', '=', False),('is_solved', '=', True)] }"/>
                                <button string="Force Complete" name="action_force_complete" type="object" class="oe_highlight"
                                attrs="{ 'invisible': ['|','|','|', ('is_draft', '=', True),('is_solved', '=', True),('is_time_conflict', '=', True),('type', '=', 'SS')] }"/>
                            </tree>
                        </field>
                    </group>
                    <group>
                        <field name="warning_bottom" readonly="1 " nolabel="1"/>
                        <button string="Force Start" name="action_force_start_current" type="object" class="oe_highlight"/>
                    </group>
                <footer>
                    <button name="action_force_start_and_complete" string="Force All Job Order" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>