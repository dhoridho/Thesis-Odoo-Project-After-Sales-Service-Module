<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- finish.to.finish.task.validation.wizard form view -->
    <record id="ff_validation_view_form" model="ir.ui.view">
        <field name="name">finish.to.finish.task.validation.wizard.view.form</field>
        <field name="model">finish.to.finish.task.validation.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <control>
                            <create name="add_product_control" string="Add a stage"/>
                        </control>
                        <field name="actual_end_date" widget="date"/>
                        <field name="project_task_id" invisible="1"/>
                        <field name="issue_solved" invisible="1"/>
                        <field name="warning" nolabel="1" class="mb-3"/>
                    </group>
                    <group>
                        <field name="predecessor_task_issue_ids" readonly="1" nolabel="1">
                             <tree create="false" editable="bottom">
                                <field name="project_task_id" invisible="1"/>
                                <field name="parent_task_id"/>
                                <field name="actual_start_date"/>
                                <field name="actual_end_date"/>
                                <field name="lag_qty"/>
                                <field name="lag_type"/>
                                <field name="reason"/>
                                <field name="is_draft" invisible="1"/>
                                <button name="button_force_start" string="Force Start" type="object" icon="fa-pencil-square-o"
                                attrs="{ 'invisible': ['|',('is_draft', '=', False),('is_solved', '=', True)] }"/>
                                <button name="button_force_complete" string="Force Complete" type="object" icon="fa-pencil-square-o"
                                attrs="{ 'invisible': ['|',('is_draft', '=', True),('is_solved', '=', True)] }"/>
                                <field name="is_solved" invisible="1"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button name="action_force_start_and_complete" string="Force Job Order All" type="object" class="oe_highlight"
                        attrs="{ 'invisible': [('issue_solved', '=', True)] }"/>
                        <button name="action_done" string="Done" type="object" class="oe_highlight"
                        attrs="{ 'invisible': [('issue_solved', '=', False)] }"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-secondary"/>
                    </footer>

                </sheet>
            </form>
        </field>
    </record>
    <!-- finish.to.finish.task.validation.wizard form view -->
    <record id="ff_successor_validation_view_form" model="ir.ui.view">
        <field name="name">finish.to.finish.successor.validation.wizard.view.form</field>
        <field name="model">finish.to.finish.successor.validation</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <control>
                            <create name="add_product_control" string="Add a stage"/>
                        </control>
                        <field name="actual_end_date" widget="date" invisible="1"/>
                        <field name="project_task_id" invisible="1"/>
                        <field name="warning" nolabel="1" class="mb-3"/>
                    </group>
                    <group>
                        <field name="successor_task_issue_ids" readonly="1" nolabel="1">
                             <tree create="false" editable="bottom">
                                <field name="project_task_id" invisible="1"/>
                                <field name="parent_task_id"/>
                                <field name="lag_qty"/>
                                <field name="lag_type"/>
                                <field name="reason"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button name="button_force_complete" string="Force Complete" type="object" class="oe_highlight"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>