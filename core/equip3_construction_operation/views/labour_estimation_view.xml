<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <!-- Form View -->
    <record id="labour_estimation_form_view" model="ir.ui.view">
        <field name="name">labour.estimation.form.view</field>
        <field name="model">labour.estimation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="bd_labour_id" readonly="1" force_save="1"/>
                            <field name="date"/>
                            <field name="project_scope_id" required="1"/>
                            <field name="section_name_id" required="1"/>
                            <field name="variable_id"/>
                        </group>
                        <group>
                            <field name="group_of_product_id" required="1"/>
                            <field name="product_id" required="1"/>
                            <field name="description"/>
                            <field name="quantity"/>
                            <field name="amount"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="labour_estimation_tree_view" model="ir.ui.view">
        <field name="name">labour.estimation.tree.view</field>
        <field name="model">labour.estimation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="project_scope_id"/>
                <field name="section_name_id"/>
                <field name="variable_id" optional="hide"/>
                <field name="group_of_product_id"/>
                <field name="product_id"/>
                <field name="description"/>
                <field name="quantity"/>
                <field name="amount"/>
            </tree>
        </field>
    </record>

    <record id="labour_estimation_action" model="ir.actions.act_window">
        <field name="name">Labour Estimation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">labour.estimation</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>