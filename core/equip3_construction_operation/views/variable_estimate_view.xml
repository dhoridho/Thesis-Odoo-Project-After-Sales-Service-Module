<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- menu project scope -->
        <menuitem
            id="scope_section_masterdata_menu_cons"
            name="Scope and Section"
            parent="abs_construction_management.menu_configuration"
            sequence="-1"/>

        <record model='ir.ui.menu' id='scope_section_masterdata_menu_cons'>
            <field name="groups_id" eval="[(6, 0, [ref('equip3_construction_accessright_setting.group_construction_engineer')])]"/>
        </record>

        <menuitem
            id="project_scope_masterdata_menu_cons"
            name="Project Scope"
            action="equip3_construction_masterdata.masterdata_project_scope_action"
            parent="scope_section_masterdata_menu_cons"
            sequence="1"/>

        <menuitem
            id="section_masterdata_menu_cons"
            name="Section"
            action="equip3_construction_masterdata.masterdata_section_action"
            parent="scope_section_masterdata_menu_cons"
            sequence="2"/>

        <!-- menu -->
        <menuitem
            id="variable_estimation_menu_external"
            name="Variable"
            parent="abs_construction_management.menu_configuration"
            sequence="0"/>

        <record model='ir.ui.menu' id='variable_estimation_menu_external'>
            <field name="groups_id" eval="[(6, 0, [ref('equip3_construction_accessright_setting.group_construction_engineer')])]"/>
        </record>
        
        <menuitem
            id="variable_estimation_menu_acternal_action"
            name="Variable"
            action="equip3_construction_masterdata.variable_estimation_action"
            parent="variable_estimation_menu_external"
            sequence="1"/>

        <menuitem
            id="variable_estimation_menu_import_external"
            name="Import Variable"
            parent="variable_estimation_menu_external"
            action="equip3_construction_masterdata.action_upload_variable"
            sequence="2"/>

        
        <!-- menu -->
        <menuitem
            id="variable_subcon_menu_external"
            name="Job Subcon Estimate"
            parent="abs_construction_management.menu_configuration"
            sequence="0"/>   

        <record model='ir.ui.menu' id='variable_subcon_menu_external'>
            <field name="groups_id" eval="[(6, 0, [ref('equip3_construction_accessright_setting.group_construction_engineer')])]"/>
        </record> 

        <menuitem
            id="subcon_estimation_menu_external_action"
            name="Job Subcon"
            action="equip3_construction_masterdata.variable_subcon_action"
            parent="variable_subcon_menu_external"
            sequence="1"/>

        <menuitem
            id="variable_subcon_menu_import_external"
            name="Import Job Subcon"
            parent="variable_subcon_menu_external"
