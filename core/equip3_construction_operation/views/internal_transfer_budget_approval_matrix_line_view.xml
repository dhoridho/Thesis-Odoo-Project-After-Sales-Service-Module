<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="internal_transfer_budget_approval_matrix_line_tree" model="ir.ui.view">
            <field name="name">internal.transfer.budget.approval.matrix.line.tree</field>
            <field name="model">internal.transfer.budget.approval.matrix.line</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="seq_no"/>
                    <field name="user_id"/>
                    <field name="min_approver"/>
                    <field name="approval_status"/>
                    <field name="time_stamp"/>
                    <field name="feedback"/>
                </tree>
            </field>
        </record>
        <record id="internal_transfer_budget_approval_matrix_line_form" model="ir.ui.view">
            <field name="name">internal.transfer.budget.approval.matrix.line.form</field>
            <field name="model">internal.transfer.budget.approval.matrix.line</field>
            <field name="arch" type="xml">
                <form string="Create Internal Transfer Budget Approval Matrix Line">
                    <sheet>
                        <group>
                            <group>
                                <field name="seq_no"/>
                                <field name="user_id"/>
                                <field name="min_approver"/>
                                <field name="internal_transfer_budget_id"/>
                            </group>
                            <group>
                                <field name="approval_status"/>
                                <field name="time_stamp"/>
                                <field name="feedback"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="internal_transfer_budget_approval_matrix_line_action">
            <field name="name">Budget Change Request Approval Matrix Line</field>
            <field name="res_model">internal.transfer.budget.approval.matrix.line</field>
<!--            <field name="domain">[('is_project_transfer', '=', False)]</field>-->
<!--            <field name="context">{'default_is_project_transfer': False}</field>-->
            <field name="view_mode">tree,form</field>
        </record>
