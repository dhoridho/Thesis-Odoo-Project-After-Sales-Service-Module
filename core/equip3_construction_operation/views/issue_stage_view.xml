<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- issue.stage tree view -->
    <record id="issue_stage_view_tree" model="ir.ui.view">
        <field name="name">issue.stage.view.tree</field>
        <field name="model">issue.stage</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="fold" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- issue.stage form view -->
    <record id="issue_stage_view_form" model="ir.ui.view">
        <field name="name">issue.stage.view.form</field>
        <field name="model">issue.stage</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="sequence" invisible="1"/>
                            <field name="name"/>
                            <field name="fold"/>
                        </group>
                        <group>
                            <field name="create_uid" string='Created By'/>
                            <field name="create_date" string='Creation Date'/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- issue.stage action window -->
    <record id="issue_stage_action" model="ir.actions.act_window">
        <field name="name">Issue Stage</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">issue.stage</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Reassign menuitem sequence -->
    <!-- <delete model="ir.ui.menu" 
            id="abs_construction_management.menu_sub_issue_type"/>
    <delete model="ir.ui.menu" 
            id="equip3_construction_masterdata.menu_stages"/> -->

    <!--MENU [Stages]-->
    <menuitem id="equip3_construction_masterdata.menu_stages"
        name = "Stages"
        parent = "abs_construction_management.menu_configuration"
        action = "project.open_task_type_form"
        sequence="1" />

    <!--MENU [Issue Type]-->
    <menuitem id="abs_construction_management.menu_sub_issue_type"
        name = "Type Of Issue"
        parent = "abs_construction_management.menu_configuration"
        action = "abs_construction_management.action_view_issue_type_menu_tree"
        sequence="2"/>

    <record model='ir.ui.menu' id='abs_construction_management.menu_sub_issue_type'>
        <field name="groups_id" eval="[(6, 0, [ref('equip3_construction_accessright_setting.group_construction_engineer')])]"/>
    </record>
    
    <!--MENU [Issue Stage]-->
    <menuitem id="menu_sub_issue_stage"
        name = "Issue Stages"
        parent = "abs_construction_management.menu_configuration"
        action = "issue_stage_action"
        sequence="2"/>

    <record model='ir.ui.menu' id='menu_sub_issue_stage'>
        <field name="groups_id" eval="[(6, 0, [ref('equip3_construction_accessright_setting.group_construction_engineer')])]"/>
    </record>

</odoo>