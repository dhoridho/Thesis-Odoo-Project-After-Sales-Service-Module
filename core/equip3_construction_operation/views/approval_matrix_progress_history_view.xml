<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_form_approval_matrix_progress_form" model="ir.ui.view">
            <field name="name">approval.matrix.progress.history.form</field>
            <field name="model">approval.matrix.progress.history</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title pr-0">
                            <h1 class="d-flex flex-row justify-content-between">
                                <field name="name" placeholder="Approval Name" class="o_task_name text-truncate"/>
                            </h1>
                        </div>
                        <div>
                            <div groups="equip3_construction_accessright_setting.group_construction_director">
                                <field name="set_default"/>
                                <label for="set_default"/>
                            </div>
                        </div>
                        <group>
                            <group>
                                <field name="project_id" widget="many2many_tags" attrs="{'required': [('set_default', '=', False)], 'invisible': [('set_default', '=', True)]}"
                                       options="{'no_create': True, 'no_quick_create':True,'no_create_edit':True}"/>
                                <field name="company_id" force_save="1" />
                                <field name="branch_id" required="1"/>
                                <field name="department_type" invisible="1"/>
                            </group>
                            <group>
                                <field name="project_director" invisible="1" readonly="1" force_save="1"/>
                                <field name="create_uid" string='Created By'/>
                                <field name="create_date" string='Creation Date'/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Approver Line">
                                <field name="approval_matrix_ids" context="{'approval_matrix_ids' : approval_matrix_ids}">
                                    <tree editable="bottom" class="class_container_approver_matrix">
                                        <field name="sequence" widget="handle" />
                                        <field name="sequence2" force_save="1" readonly="1" class="approver_matrix_sequence"/>
                                        <field name="approvers" widget="many2many_tags" required='1'/>
                                        <field name="minimum_approver" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_tree_approval_matrix_progress_historyS_tree" model="ir.ui.view">
            <field name="name">approval.matrix.progress.history.tree</field>
            <field name="model">approval.matrix.progress.history</field>
            <field name="arch" type="xml">
                <tree string="Progress History Approval Matrix" multi_edit="1" sample="1">
                    <field name ="name"/>
                    <field name="branch_id"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <!-- <record id="view_claim_request_approval_filter" model="ir.ui.view">
            <field name="name">progress.history.approval.filter.projectid</field>
            <field name="model">approval.matrix.progress.history</field>
            <field name="arch" type="xml">
                <search string="Project">
                <group name="group_by" string="Group By">
                    <filter name="project_id" string="Project" context="{'group_by' : 'project_id'}" />
                </group>
                </search>
            </field>
        </record> -->

        <record id="action_approval_matrix_progress_history" model="ir.actions.act_window">
            <field name="name">Progress History Approval Matrix</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">approval.matrix.progress.history</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('department_type', '=', 'project')]</field>
            <field name="context">{'default_department_type': 'project'}</field>
            <field name="target">current</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Approval Matrix found. Let's create one!
                </p>
            </field>
        </record>

        <menuitem 
            id="approval_matrix_progress_history_configuration_menu" 
            name="Progress History Approval Matrix" 
            parent="equip3_construction_masterdata.menu_approval_matrix_construction" 
            action="action_approval_matrix_progress_history" 
            sequence="8"
        />

        <record model='ir.ui.menu' id='approval_matrix_progress_history_configuration_menu'>
            <field name="groups_id" eval="[(6, 0, [ref('equip3_construction_accessright_setting.group_construction_engineer')])]"/>
        </record>

    </data>
</odoo>
