<odoo>
    <data>
        <record id="add_fields_project_task_form_const" model="ir.ui.view">
            <field name="name">add.fields.project.task.form.const</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="equip3_construction_operation.add_fields_project_task_form"/>
            <field name="arch" type="xml">
                <!-- <xpath expr="//sheet/group/group[2]/field[@name='is_subtask']" position="after">
                    <label for="duration" string="Duration" attrs="{'invisible':[('is_subtask','=', True)]}"/> 
                        <div class="d-flex" attrs="{'invisible':[('is_subtask','=', True)]}">
                            <field name="duration"/>
                            <span class="oe_inline o_form_label mx-3 oe_read_only"> days </span>
                            <span class="oe_inline o_form_label mx-3 oe_edit_only"> days </span>
                        </div>
                </xpath> -->

                <xpath expr="//notebook/page[@name='subtask']" position="before">
                    <page name="predeccesor" string="Predecessor and Successor">
                        <group>
                            <group string="Predecessor">
                                <field name="predecessor_ids" widget="one2many_list" nolabel="1">
                                    <tree string="Predecessor" >
                                        <control>
                                            <create name="add_product_control" string="Add a predecessor"/>
                                        </control>
                                        <field name="task_id" invisible='1'/>
                                        <field name="parent_task_id" string="Predecessor"/>
                                        <field name="type"/>
                                        <field name="lag_qty"/>
                                        <field name="lag_type"/>
                                        <field name="sale_order" invisible="1"/>
                                        <field name="project_id" invisible="1"/>
                                        <field name="task_name" invisible="1"/>
                                    </tree>
                                    <form string="Predecessor">
                                        <sheet>
                                            <group>
                                                <field name="parent_task_id" string="Predecessor"/>
                                                <field name="type"/>
                                            </group>
                                            <group>
                                                <field name="lag_qty"/>
                                                <field name="lag_type"/>
                                                <field name="sale_order" invisible="1"/>
                                                <field name="project_id" invisible="1"/>
                                                <field name="task_name" invisible="1"/>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </group>
                            <group string="Successor">
                                <field name="successor_ids" widget="one2many_list" nolabel="1">
                                    <tree string="Successor" create="false">
                                        <field name="task_id" invisible='1'/>
                                        <field name="parent_task_id" string='Successor' force_save="1"/>
                                        <field name="type"/>
                                        <field name="lag_qty"/>
                                        <field name="lag_type"/>
                                        <field name="sale_order" invisible="1"/>
                                        <field name="project_id" invisible="1"/>
                                    </tree>
                                    <form string="Successor">
                                        <sheet>
                                            <group>
                                                <field name="parent_task_id" string='Successor'/>
                                                <field name="type"/>
                                            </group>
                                            <group>
                                                <field name="lag_qty"/>
                                                <field name="lag_type"/>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </group>
                        </group>        
                    </page>
                </xpath>
            </field>
        </record>

        <record id="job_order_action_form" model="ir.actions.act_window">
            <field name="name">Job Orders</field>
            <field name="res_model">project.task</field>
            <field name="view_mode">form</field>
            <field name="context">{'res_id': active_id}</field>
        </record>
    </data>
</odoo>
