<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="edit_view_job_cost_sheet_menu_form" model="ir.ui.view">
            <field name="name">edit.view.job.cost.sheet.menu.form</field>
            <field name="model">job.cost.sheet</field>
            <field name="inherit_id" ref="abs_construction_management.view_job_cost_sheet_menu_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page/field[@name='contract_history_ids']" position="attributes">
                    <attribute name="class">o_contract_history_line</attribute>
                </xpath>
                <xpath expr="//notebook/page/field[@name='material_ids']" position="attributes">
                    <attribute name="class">o_cost_material_line</attribute>
                </xpath>
                <xpath expr="//notebook/page/field[@name='material_labour_ids']" position="attributes">
                    <attribute name="class">o_cost_labour_line</attribute>
                </xpath>
                <xpath expr="//notebook/page/field[@name='material_overhead_ids']" position="attributes">
                    <attribute name="class">o_cost_overhead_line</attribute>
                </xpath>
                <xpath expr="//notebook/page/field[@name='material_subcon_ids']" position="attributes">
                    <attribute name="class">o_cost_subcon_line</attribute>
                </xpath>
                <xpath expr="//notebook/page/field[@name='material_equipment_ids']" position="attributes">
                    <attribute name="class">o_cost_equipment_line</attribute>
                </xpath>
                <xpath expr="//notebook/page/field[@name='internal_asset_ids']" position="attributes">
                    <attribute name="class">o_cost_asset_line</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>