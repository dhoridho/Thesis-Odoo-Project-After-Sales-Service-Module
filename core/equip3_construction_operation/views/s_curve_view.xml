<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!--  graph view -->
    <record id="equip3_construction_purchase_operation_scurve_view_form" model="ir.ui.view">
        <field name="name">scurve.view.form</field>
        <field name="model">construction.scurve</field>
        <field name="arch" type="xml">
            <form string="S Curve">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-file-excel-o" name="cons_scurve_print"
                                type="object" invisible="1">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Print Forecast</span><b/>
                                <span class="o_stat_text">Report</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" nolabel="1" readonly = "True"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="start_date"/>
                            <field name="job_cost_sheet"/>
                            <field name="project_budget" widget="many2many_tags"/>
                            <field name="from_menu" invisible="1" force_save="1"/>
                        </group>
                        <group>
                            <field name="end_date"/>
                            <field name="work_orders_ids" widget="many2many_tags"/>
                            <field name="method"/>
                            <field name="contract_amount" widget='monetary' readonly="1"/>
                            <field name="ks_chart_data" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="graph" string="Chart" groups="project.group_project_user">
                            <field name="ks_graph_view" widget="ks_graph"/>
                            <field name="scurve_line_ids" class="o_scurve_line">
                                <tree string="Scurve" editable="bottom">
                                    <control>
                                        <create name="add_product_control" string="Add a scurve"/>
                                    </control>
                                    <field name="sr_no"/>
                                    <field name="month"/>
                                    <field name="year"/>
                                    <field name="method" invisible="1"/>
                                    <field name="planned_cost" attrs="{'column_invisible':[('parent.method','in', ('progress', 'cvp', 'all'))]}" force_save="1"/>
                                    <field name="actual_cost" attrs="{'column_invisible':[('parent.method','in', ('progress', 'all'))]}" force_save="1"/>
                                    <field name="prog_planned_cost" attrs="{'column_invisible':[('parent.method','in', ('progress', 'cost', 'cvp', 'all'))]}" force_save="1"/>
                                    <field name="prog_actual_cost" attrs="{'column_invisible':[('parent.method','in', ('progress', 'cost', 'all'))]}" force_save="1"/>
                                    <field name="planned_progress" attrs="{'column_invisible':[('parent.method','in', ('cost', 'cvp', 'all'))]}"/>
                                    <field name="actual_progress" attrs="{'column_invisible':[('parent.method','in', ('cost', 'all'))]}"/>

                                    <field name="purchased_amt" attrs="{'column_invisible':[('parent.method','in', ('progress', 'cost', 'cvp', 'pa_costprog'))]}" force_save="1"/>
                                    <field name="transferred_amt" attrs="{'column_invisible':[('parent.method','in', ('progress', 'cost', 'cvp', 'pa_costprog'))]}"/>
                                    <field name="used_amt" attrs="{'column_invisible':[('parent.method','in', ('progress', 'cost', 'cvp', 'pa_costprog'))]}"/>

                                    <field name="planned_revenue" invisible="1"/>
                                    <field name="actual_revenue" invisible="1"/>
                                    <field name="planned_material_cost" invisible="1"/>
                                    <field name="actual_material_cost" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- construction.scurve action window -->
    <record id="construction_scurve_action" model="ir.actions.act_window">
        <field name="name">construction.scurve.action</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">construction.scurve</field>
        <field name="view_mode">form</field>
    </record>

</odoo>