<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- template.job_order form view -->
    <record id="job_order_template_view_form" model="ir.ui.view">
        <field name="name">template.job.order.view.form</field>
        <field name="model">templates.job.order</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <div class="oe_title pr-0">
                        <h1 class="d-flex flex-row">
                            <field name="priority" widget="priority" class="mr-3"/>
                            <field name="name" class="o_task_name text-truncate" placeholder="Job Order Title..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="is_subcon" />
                            <field name="tag_ids" widget='many2many_tags'/>
                            <label for="task_weightage"/>
                            <div>
                                <field name="task_weightage" class="oe_inline"/>
                                <label for="task_weightage" string="%%"/>
                            </div>
                        </group>
                        <group>
                            <field name="create_uid" string='Created By'/>
                            <field name="create_date" string='Creation Date'/>
                        </group>
                    </group>
                    <notebook>
                        <page name="description" string="Description">
                            <field name="new_description" nolabel='1'/>
                            <field name="description" nolabel="1" invisible='1'/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- template.job_order tree view -->
    <record id="job_order_template_view_tree" model="ir.ui.view">
        <field name="name">template.job.order.view.tree</field>
        <field name="model">templates.job.order</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" sample="1"> 
                <field name="name"/>
                <field name="tag_ids" widget='many2many_tags'/>
                <field name="task_weightage"/>
            </tree>
        </field>
    </record>    

    <!-- templates.job_order action window -->

    <record id="job_order_template_action" model="ir.actions.act_window">
        <field name="name">Job Order Template</field>
        <field name="res_model">templates.job.order</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="job_order_template_view_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Job Order Template found. Let's create one!
            </p>
        </field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="job_order_template_menu_act" name="Job Order Template" parent="equip3_construction_operation.templates_menu_categ" action="job_order_template_action" sequence="20"/>
    
    <record model='ir.ui.menu' id='job_order_template_menu_act'>
        <field name="groups_id" eval="[(6, 0, [ref('equip3_construction_accessright_setting.group_construction_engineer')])]"/>
    </record>

</odoo>