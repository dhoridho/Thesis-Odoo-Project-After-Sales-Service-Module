<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- approval.matrix.asset.allocation form view -->
    <record id="view_form_approval_matrix_asset_allocationr" model="ir.ui.view">
        <field name="name">approval.matrix.asset.allocation.form</field>
        <field name="model">approval.matrix.asset.allocation</field>
        <field name="arch" type="xml">
            <form>
				<sheet>
                    <div class="oe_title pr-0">
                        <h1 class="d-flex flex-row justify-content-between">
                            <field name="name" placeholder="Approval Name" class="o_task_name text-truncate"/>
                        </h1>
                    </div>
                    <div>
                        <div groups="equip3_construction_accessright_setting.group_construction_director">
                            <field name="set_default"/>
                            <label for="set_default"/>
                        </div>
                    </div>
					<group>
						<group>
                            <field name="project_id" widget="many2many_tags" attrs="{'required': [('set_default', '=', False)], 'invisible': [('set_default', '=', True)]}"
                                   options="{'no_create': True, 'no_quick_create':True,'no_create_edit':True}"/>
							<field name="company_id" force_save="1" />
							<field name="branch_id" required="1"/>
                            <field name="department_type" invisible="1"/>
						</group>
						<group>
							<field name="create_uid" string="Created By"/>
                            <field name="create_date" string="Creation Date"/>
						</group>
					</group>
					<notebook>
						<page string="Approval Matrix">
							<field name="approval_matrix_ids" context="{'approval_matrix_ids' : approval_matrix_ids}">
                                <tree editable="bottom" class="class_container_approver_matrix">
                                    <field name="sequence" widget="handle" />
                                    <field name="sequence2" force_save="1" readonly="1" class="approver_matrix_sequence"/>
                                    <field name="approvers" widget="many2many_tags" required='1' />
                                    <field name="minimum_approver" />
                                </tree>
                            </field>
						</page>
					</notebook>
				</sheet>
				<div class="oe_chatter">
					<field name="message_follower_ids"/>
					<field name="activity_ids"/>
					<field name="message_ids"/>
				</div>
			</form>
        </field>
    </record>

    <!-- approval.matrix.asset.allocation tree view -->
    <record id="view_tree_approval_matrix_asset_allocation" model="ir.ui.view">
        <field name="name">approval.matrix.asset.allocation.tree</field>
        <field name="model">approval.matrix.asset.allocation</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" sample="1">
                <!-- Add your fields here -->
                <field name ="name"/>
				<field name="branch_id"/>
				<field name="company_id"/>
            </tree>
        </field>
    </record>

    <!-- approval.matrix.asset.allocation action window -->
    <record id="action_approval_matrix_asset_allocation" model="ir.actions.act_window">
        <field name="name">Asset Allocation Approval Matrix</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">approval.matrix.asset.allocation</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('department_type', '=', 'project')]</field>
        <field name="context">{'default_department_type': 'project'}</field>
        <field name="view_id" ref="view_tree_approval_matrix_asset_allocation" />
        <field name="target">current</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Approval Matrix found. Let's create one!
            </p>
        </field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem 
        id="approval_matrix_asset_allocation_configuration_menu" 
        name="Asset Allocation Approval Matrix" 
        parent="equip3_construction_masterdata.menu_approval_matrix_construction" 
        action="action_approval_matrix_asset_allocation" 
        sequence="7"/>

    <record model="ir.ui.menu" id="approval_matrix_asset_allocation_configuration_menu">
        <field name="groups_id" eval="[(6, 0, [ref('equip3_construction_accessright_setting.group_construction_engineer')])]"/>
    </record>

</odoo>