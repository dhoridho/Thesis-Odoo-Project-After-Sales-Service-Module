<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="assets_backend" name="construction_management assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" href="/equip3_construction_operation/static/src/scss/construction_management.scss"/>
        </xpath>
    </template>

   <record id="action_stock_product_usage" model="ir.actions.act_window">
        <field name="name">Product Usage</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.scrap.request</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_is_product_usage': True}</field>
        <field name="domain">[('is_product_usage', '=', True)]</field>
        <field name="help" type="html">
          <p class="oe_views_nocontent_create">
            Click to add a new Material usage.
          </p>
        </field>
   </record>


    <menuitem id="menu_sub_product_usage"
              name="Product Usage"
              parent="abs_construction_management.menu_materials"
              action="equip3_construction_operation.action_stock_product_usage"
              sequence="7"/>

    <record model='ir.ui.menu' id='menu_sub_product_usage'>
        <field name="groups_id" eval="[(6, 0, [ref('equip3_construction_accessright_setting.group_construction_engineer')])]"/>
    </record>

    <menuitem id="abs_construction_management.menu_materials"
        name = "Products"
        parent = "abs_construction_management.construction_management"
        groups = "abs_construction_management.group_construction_user"
        sequence="6"/>

    <menuitem id="abs_construction_management.menu_sub_materials"
        name = "Products"
        parent = "abs_construction_management.menu_materials"
        action = "abs_construction_management.action_view_material"
        sequence="1"/>
    
    <record model='ir.ui.menu' id='abs_construction_management.menu_sub_materials'>
        <field name="groups_id" eval="[(6, 0, [ref('equip3_construction_accessright_setting.group_construction_engineer')])]"/>
    </record>

</odoo>