<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<data>

    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.acrux.chat.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button class="oe_stat_button" type="action" name="%(acrux_chat_sale.acrux_chat_message_wizard_action)d"
                        groups="acrux_chat.group_chat_basic_extra"
                        icon="o-hm-smart-all-send-whatsapp"
                        context="{'default_partner_id': partner_id}"
                        attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund'))]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Send</span>
                        <span class="o_stat_text">Whatsapp</span></div>
                </button>
            </div>
            <xpath expr="//header" position="inside">
                <button name="send_by_chatroom" string="Invoice by Chat"
                        type="object" states="posted"/>
            </xpath>
        </field>
    </record>

</data>
</odoo>
