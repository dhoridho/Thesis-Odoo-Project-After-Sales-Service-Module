<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="view_order_picking_form" model="ir.ui.view">
        <field name="name">order.picking.form</field>
        <field name="model">order.picking</field>
        <field name="type">form</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <form>
                <group invisible="1">
                    <field name="move_id"/>
                </group>
                <notebook>
                    <page name="product" string="Products">
                        <field name="order_picking_line_ids" readonly="1" force_save="1">
                            <tree edit="0" create="0" delete="0">
                                <field name="product_id"/>
                                <field name="quantity"/>
                                <field name="unit_price"/>
                                <field name="subtotal"/>
                                <field name="picking_id" string="Picking Order"/>
                                <field name="state" string="Picking Order State"/>
                            </tree>
                            <form edit="0">
                                <group>
                                    <group>
                                        <field name="product_id"/>
                                        <field name="quantity"/>
                                        <field name="unit_price"/>
                                    </group>
                                    <group>
                                        <field name="subtotal"/>
                                        <field name="picking_id" string="Picking Order"/>
                                        <field name="state" string="Picking Order State"/>
                                    </group>
                                </group>
                            </form>
                        </field>
                    </page>
                </notebook>
<!--                 <footer>
                    <button string="Confirm" name="action_confirm_order" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer> -->
            </form>
        </field>
    </record>

</odoo>