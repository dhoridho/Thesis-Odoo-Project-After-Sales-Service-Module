<odoo>
    <record id="view_po_product_cost_adjustment_form" model="ir.ui.view">
        <field name="name">po.product.cost.adjustment.form</field>
        <field name="model">po.product.cost.adjustment</field>
        <field name="arch" type="xml">
            <form string="Product Cost Adjustment">
                <sheet>
                    <group>
                        <p><strong> Is there any adjusment product cost? </strong></p>
                    </group>
                    <group>
                        <field name="adjustment_line_ids">
                            <tree string="Adjustment Lines" editable="bottom" create="false">
                                <field name="product_id" readonly="1"/>
                                <field name="currency_id" readonly="1"/>
                                <field name="quantity" readonly="1"/>
                                <field name="price_unit"/>
                                <field name="price_subtotal"/>
                                <!-- <field name="cost_adjusment_amount"/> -->
                            </tree>
                        </field>
                    </group>
                </sheet>
                 <footer>
                    <!-- Custom Save Button -->
                    <!-- <button name="action_submit_cost_adjusment" type="object" string="Save" class="btn-primary"/> -->
                    <!-- Custom Confirm Button -->
                    <button name="action_confirm_adjustment" type="object" string="Confirm" class="btn-primary"/>
                    <!-- Custom Cancel Button -->
                    <button special="cancel" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>