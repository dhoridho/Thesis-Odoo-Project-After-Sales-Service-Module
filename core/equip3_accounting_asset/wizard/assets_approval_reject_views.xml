<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_wizard_assets_approval_reject" model="ir.ui.view">
        <field name="name">assets.approval.reject.wizard</field>
        <field name="model">assets.approval.reject</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="reason" />
                </group>
                <footer>
                    <button name="action_reject" string="Reject" type="object" class="oe_highlight"/>
                    <button string="Cancel" special='cancel' class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
