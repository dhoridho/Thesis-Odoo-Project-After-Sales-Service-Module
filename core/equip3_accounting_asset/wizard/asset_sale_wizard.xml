<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="asset_sale_form_view" model="ir.ui.view">
        <field name="name">asset.sale.form.view</field>
        <field name="model">asset.asset.sale</field>
        <field name="arch" type="xml">
            <form string="Asset Sale">
                <group col="2">
                    <group>
                        <field name="partner_id"/>
                        <field name="amount"/>
                    </group>
                    <group>
                        <field name="is_invoice"/>
                        <field name="currency_id"/>
                        <field name="journal_id" attrs="{'invisible': [('is_invoice', '=', True)], 'required' : [('is_invoice', '=', False)]}"/>
                        <field name="asset_journal_id" attrs="{'invisible': [('is_invoice', '=', False)], 'required' : [('is_invoice', '=', True)]}"/>
                        <field name="transit_account_id" attrs="{'invisible': [('is_invoice', '=', False)], 'required' : [('is_invoice', '=', True)]}"/>
                        <field name="tax_id" />
                        <!-- <field name="tax_id" attrs="{'invisible': [('is_invoice', '=', True)], 'required' : [('is_invoice', '=', False)]}"/> -->
                    </group>
                </group>
                <footer>
                    <button string="Confirm" name="confirm_asset_sale" type="object" class="oe_highlight" />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="asset_sale_action">
        <field name="name">Sale</field>
        <field name="res_model">asset.asset.sale</field>
        <field name="view_mode">form</field>
        <field name="type">ir.actions.act_window</field>
        <field name="target">new</field>
    </record>
</odoo>