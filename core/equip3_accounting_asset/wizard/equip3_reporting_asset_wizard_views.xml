<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="equip3_reporting_asset_wizard_view_form" model="ir.ui.view">
        <field name="name">equip3.reporting.asset.wizard.view.form</field>
        <field name="model">equip3.reporting.asset.wizard</field>
        <field name="arch" type="xml">
            <form class="equip3_reporting_asset_wizard">
                <sheet>
                    <group>
                        <group>
                            <field name="year" required="1" options="{'format': 0}"/>
                        </group>
                        <group>
                            <field name="asset_asset_pos"/>
                            <field name="dept_asset_pos"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_export_xlsx" string="Export XLSX" class="btn btn-primary" type="object"/>
                        <button special="cancel" string="Cancel" type="object" class="btn btn-default oe_inline"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="equip3_reporting_asset_wizard_action" model="ir.actions.act_window">
        <field name="name">Reporting Asset</field>
        <field name="res_model">equip3.reporting.asset.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
