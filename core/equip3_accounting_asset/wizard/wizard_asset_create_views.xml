<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="wizard_asset_create_form_view" model="ir.ui.view">
        <field name="name">wizard.asset.create.form.view</field>
        <field name="model">wizard.asset.create</field>
        <field name="arch" type="xml">
            <form string="Create Asset">
                <group col="2">
                    <group>
                        <field name="date" required="1"/>
                        <field name="first_depreciation_manual_date" />
                        <field name="salvage_value"/>
                        <field name="method" required="1" />
                        <field name="method_time"/>
                        <field name="prorata"/>
                        <field name="cut_off_asset_date"/>
                        <field name="method_number_fiscal"/>
                        <field name="method_period_fiscal"/>
                        
                    </group>
                </group>
                <footer>
                    <button string="Create Asset" name="create_new_asset" type="object" class="oe_highlight" />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="wizard_asset_create_action">
        <field name="name">Create New Asset</field>
        <field name="res_model">wizard.asset.create</field>
        <field name="view_mode">form</field>
        <field name="type">ir.actions.act_window</field>
        <field name="target">new</field>
    </record>
</odoo>