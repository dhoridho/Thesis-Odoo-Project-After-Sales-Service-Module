<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_product_asset_form" model="ir.ui.view">
        <field name="name">product.asset.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="asset_category_id" attrs="{'invisible': [('type', '!=', 'asset')], 'required': [('type', '=', 'asset')]}"/>
            </xpath>            
            <xpath expr="//field[@name='type']" position="after">
                <field name="asset_entry_perqty" attrs="{'invisible': [('type', '!=', 'asset')]}"/>
            </xpath>
        </field>
    </record>
    
    <record id="product_asset_info_form_view_inherit" model="ir.ui.view">
        <field name="name">product.product.asset.info.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="asset_category_id" attrs="{'invisible': [('type', '!=', 'asset')]}"/>
            </xpath>            
            <xpath expr="//field[@name='type']" position="after">
                <field name="asset_entry_perqty" attrs="{'invisible': [('type', '!=', 'asset')]}"/>
            </xpath>
        </field>
    </record>
</odoo>