<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_asset_asset_revalue_wizard_form" model="ir.ui.view">
        <field name="name">asset.asset.revalue.wizard.form.view</field>
        <field name="model">asset.asset.revalue.wizard</field>
        <field name="arch" type="xml">
            <form string="Asset Revaluation">
                <group>
                    <group>
                        <field name="reason"/>
                        <!-- <field name="original_value"/> -->
                        <field name="remaining_value"/>
                        <field name="amount"/>
                        <field name="salvage_value"/>
                        <field name="asset_depreciation_manual_date" required="1"/>
                    </group>
                    <group>
                        <field name="journal_id"/>
                        <field name="method_number"/>
                        <field name="method_period"/>
                    </group>
                </group>
                <footer>
                    <button string="Confirm" name="confirm_revalue_asset" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="asset_asset_revalue_wizard_action">
        <field name="name">Asset Revaluation</field>
        <field name="res_model">asset.asset.revalue.wizard</field>
        <field name="view_mode">form</field>
        <field name="type">ir.actions.act_window</field>
        <field name="target">new</field>
    </record>

    <record model="ir.ui.view" id="view_asset_asset_revalue_tree">
        <field name="name">asset.asset.revalue.tree</field>
        <field name="model">asset.asset.revalue</field>
        
        <field name="arch" type="xml">
            <tree string="Asset Revaluation" create="false" edit="false">
                <field name="reason"/>
                <field name="date"/>
                <field name="user_id"/>
                <field name="remaining_value"/>
                <field name="prev_method_number"/>
                <field name="prev_method_period"/>
                <field name="amount"/>
                <field name="method_number"/>
                <field name="method_period"/>
                <field name="dispose_price"/>
                <field name="asset_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_asset_asset_revalue">
        <field name="name">Asset Revaluation</field>
        <field name="res_model">asset.asset.revalue</field>
        <field name="view_mode">tree</field>
        <field name="domain">[('revalue_asset_id', '=', active_id)]</field>
    </record>


    <record model="ir.ui.view" id="view_account_asset_category_form_equip3_inherit">
        <field name="name">account.asset.category.form.equip3.inherit</field>
        <field name="model">account.asset.category</field>
        <field name="inherit_id" ref="om_account_asset.view_account_asset_category_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='prorata']" position="after">
                <div class="content-group" attrs="{'invisible': [('prorata', '=', False)]}">
                    <div style="margin-left: 30px;">
                        <field name="prorata_type" class="o_light_label" widget="radio" />
                    </div>
                </div>
                <field name="cut_off_asset_date" readonly="1" attrs="{'invisible' : [('prorata_type','!=','monthly')]}"/>
                <field name="is_convert_to_zero" attrs="{'invisible': [('method', '=', 'linear')]}"/>
                <field name="is_include_salvage_value"/>
                <field name="is_monthly_depreciation"/>
                <field name="is_reset_january" attrs="{'invisible': [('is_monthly_depreciation', '=', False)]}" />
            </xpath>
            <xpath expr="//field[@name='account_depreciation_expense_id']" position="after">
                <field name="account_revaluation_surplus_id"/>
                <field name="account_revaluation_loss_id"/>
                <field name="account_sales_id" invisible='1' required='0'/>
                <field name="account_sales_profit"/>
                <field name="account_sales_loss"/>
            </xpath>
            <xpath expr="//field[@name='date_first_depreciation']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='method_progress_factor']" position="attributes">
                <attribute name="attrs">{'invisible':[('method','in',['linear','double_declining'])], 'required':[('method','=','degressive')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='account_sales_loss']" position="after">
                <field name="dispose_account"/>
            </xpath>
            <xpath expr="//group[last()]" position="inside">
                <group string="Sequence" name="sequence">
                    <field name="sequence_id" readonly="1"/>
                    <field name="set_sequence"/>
                    <field name="sequence_number_next" readonly="0"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="view_account_asset_asset_form_inherit" model="ir.ui.view">
        <field name="name">account.asset.asset.form.inherit</field>
        <field name="model">account.asset.asset</field>
        <field name="inherit_id" ref="om_account_asset.view_account_asset_asset_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/field[@name='state']" position="attributes">
                <attribute name="attrs">{'invisible': [('is_approval_matrix', '=', True), ('state', '!=', 'open')]}</attribute>
            </xpath>
            <xpath expr="//header" position="inside">
                <field name="state1" widget="statusbar" statusbar_visible="draft,waiting_for_approve,open" readonly="1"
                       attrs="{'invisible' : ['|', ('is_approval_matrix', '=', False), ('state', 'in', ('open', 'reject'))]}"/>
                <field name="state2" widget="statusbar"
                       statusbar_visible="draft,reject"
                       attrs="{'invisible' : [('state', '!=', 'reject')]}"/>
            </xpath>
            <button name="validate" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('is_approval_matrix', '=', True)]} </attribute>
            </button>

            <button name="set_to_close" position="after">
                <button name="confirm_dispose_asset" string="Dispose" type="object" class="oe_highlight" states="open"/>
                <!-- <button name="set_to_dispose" string="Dispose" type="object" class="oe_highlight" states="open"/> -->
                <!-- <button name='validate_dispose' type='object' string='Validate' class="oe_highlight" states="dispose"/> -->
                <!-- <button name='set_to_close' type='object' string='Validate Or' class="oe_highlight" states="dispose"/> -->
                <!-- <button name='cancel_dispose' type='object' string='Cancel' class="oe_highlight" states="open"/> -->
            </button>

            <button name="set_to_close" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>


            <button name="validate" position="after">
                <button string="Request For Approval" name="action_request_approval" type="object" class="oe_highlight"
                attrs="{'invisible' : ['|', '|', ('is_approval_matrix', '=', False), ('approval_matrix_id', '=', False), ('state', 'not in', ('draft'))]}"/>
                <button string="Approve" name="action_approve" type="object" class="oe_highlight"
                attrs="{'invisible' : ['|', ('state', '!=', 'waiting_for_approve'), ('is_approve_button', '=', False)]}"/>
                <button string="Reject" name="action_reject" type="object" class="oe_highlight"
                attrs="{'invisible' : ['|', ('state', '!=', 'waiting_for_approve'), ('is_approve_button', '=', False)]}"/>
            </button>
            <xpath expr="//div[@class='oe_title']" position="before">
                <div class="oe_title">
                    <h1>
                        <field name="asset_sequence" readonly="1" force_save="1"/>
                    </h1>
                </div>
            </xpath>
            <field name="company_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="analytic_tag_ids" position="after">
                <field name="approval_matrix_id" attrs="{'invisible': [('is_approval_matrix', '=', False)]}"/>
                <field name="is_approval_matrix" invisible="1"/>
                <field name="is_approve_button" invisible="1"/>
            </field>
            <xpath expr="//button[@name='set_to_close']" position="before">
                <button name='%(asset_sale_action)d' type='action' string='Sale' class="oe_highlight"  attrs="{'invisible': [('state', '!=', 'open')]}"/>
            </xpath>
            <xpath expr="//field[@name='state']" position="before">
                <button name='%(asset_asset_revalue_wizard_action)d' type='action' string='Revalue Asset' attrs="{'invisible': [('state', '!=', 'open')]}"/>
            </xpath>
            <xpath expr="//div[@name='button_box']/button[@name='open_entries']" position="before">
                <button class="oe_stat_button" name="open_asset_dispose_entries" type="object" icon="o-hm-smart-all-asset-sale" attrs="{'invisible': [('asset_dispose_entries_count','=',0)]}">
                    <field string="Asset Dispose" name="asset_dispose_entries_count" widget="statinfo"/>
                </button>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" name="open_asset_post_entries" type="object" icon="o-hm-smart-all-asset-sale" attrs="{'invisible': [('asset_post_entries_count','=',0)]}">
                    <field string="Asset Sale" name="asset_post_entries_count" widget="statinfo"/>
                </button>
                <!-- <button class="oe_stat_button" name="open_asset_dispose_entries" type="object" icon="o-hm-smart-all-asset-sale">
                    <field string="Asset Dispose" name="asset_dispose_entries_count" widget="statinfo"/>
                </button> -->
                <field name="is_revaluation_asset" invisible="1"/>
                <button class="oe_stat_button" name="open_asset_invoices" type="object" icon="o-hm-smart-all-invoices" string="Asset Invoice" invisible="1"/>
                <button class="oe_stat_button" name="%(action_asset_asset_revalue)d" type="action" icon="o-hm-smart-all-asset-revaluation" string="Asset Revaluation" attrs="{'invisible': [('is_revaluation_asset', '=', False)]}"/>
            </xpath>

            <xpath expr="//button[@name='set_to_close']" position="attributes">
                <attribute name='string'>Dispose</attribute>
            </xpath>
            <field name="value_residual" position="attributes">
                <attribute name='invisible'>1</attribute>
            </field>
            <field name="value_residual" position="after">
                <field name="asset_value_residual" widget="monetary" string="Book Value"/>
            </field>
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="fiscal_category_id"/>
            </xpath>
            <xpath expr="//field[@name='category_id']" position="attributes">
                <attribute name='required'>1</attribute>
            </xpath>
            <xpath expr="//notebook/page/field[@name='depreciation_line_ids']/tree/field[@name='move_check']" position="attributes">
                <attribute name="widget">deprec_lines</attribute>
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//notebook/page/field[@name='depreciation_line_ids']/tree/field[@name='move_check']" position="after">
                <field name="state" widget="badge" decoration-danger="state == 'unposted'" decoration-warning="state == 'draft'" decoration-success="state == 'posted'" attrs="{'column_invisible': [('parent.state','!=','open')]}"/>
                <!-- <button string="Link" name="create_move" type="object" class="oe_highlight" attrs="{'column_invisible': [('parent.state','!=','open')], 'invisible': [('state','=','posted')]}"/> -->
            </xpath>
            <xpath expr="//notebook/page/field[@name='depreciation_line_ids']/tree" position="attributes">
                <attribute name="delete">false</attribute>
            </xpath>
            <xpath expr="//notebook/page/field[@name='depreciation_line_ids']" position="attributes">
                <attribute name="attrs">{'readonly': [('state','!=','draft')]}</attribute>
            </xpath>
            <!-- <xpath expr="//page/group/field[@name='prorata']" position="attributes">
                <attribute name="attrs">
                    {'invisible':[('method','in',['linear','degressive'])]}
                </attribute>
            </xpath> -->
            <xpath expr="//page/group/field[@name='prorata']" position="after">
                <field name="is_monthly_depreciation" readonly="0"/>
                <field name="is_reset_january" />
                <field name="months_remaining" attrs="{'invisible': [('method', '!=', 'double_declining')]}"/>
            </xpath>

            <xpath expr="//field[@name='method_number']" position="attributes">
                <attribute name="readonly">0</attribute>
            </xpath>
            <xpath expr="//field[@name='method_period']" position="attributes">
                <attribute name="readonly">0</attribute>
            </xpath>
            <xpath expr="//page/group/field[@name='method_progress_factor']" position="attributes">
                <attribute name="attrs">
                    {'invisible':[('method','in',['double_declining','linear'])], 'required':[('method','=','degressive')]}
                </attribute>
            </xpath>

            <xpath expr="//field[@name='prorata']" position="after">
                <div class="content-group" attrs="{'invisible': [('prorata', '=', False)]}">
                    <div style="margin-left: 30px;">
                        <field name="prorata_type" class="o_light_label" widget="radio" />
                    </div>
                </div>
                <field name="cut_off_asset_date" readonly="1" attrs="{'invisible' : [('prorata_type','!=','monthly')]}"/>
                <field name="is_convert_to_zero" attrs="{'invisible': [('method', '=', 'linear')]}"/>
                <field name="is_include_salvage_value" />
            </xpath>
            
            <xpath expr="//field[@name='is_reset_january']" position="attributes">
                <attribute name="attrs">
                    {'readonly': [('state', '!=', 'draft')], 'invisible': [('is_monthly_depreciation', '=', False)]}
                </attribute>
            </xpath>

            <xpath expr="//field[@name='is_monthly_depreciation']" position="attributes">
                <attribute name="attrs">
                    {'readonly': [('state', '!=', 'draft')]}
                </attribute>
            </xpath>

            <xpath expr="//field[@name='invoice_id']" position="attributes">
                <attribute name="attrs">
                    {'readonly': [('state', '!=', 'draft')]}
                </attribute>
            </xpath>
            
            <xpath expr="//field[@name='analytic_tag_ids']" position="attributes">
                <attribute name="attrs">
                    {'readonly': [('state', '!=', 'draft')]}
                </attribute>
            </xpath>

            <xpath expr="//field[@name='account_analytic_id']" position="attributes">
                <attribute name="attrs">
                    {'readonly': [('state', '!=', 'draft')]}
                </attribute>
            </xpath>

            <xpath expr="//field[@name='account_analytic_id']" position="after">
                <field name="company_id" readonly="1" />
                <field name="branch_id" required="1" options="{'no_create': True, 'no_create_edit': True}" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                <field name="location" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                <field name="po_ref" attrs="{'readonly': [('state', '!=', 'draft')]}" />
            </xpath>

            <xpath expr="//field[@name='date_first_depreciation']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//notebook" position="inside">
                <page string="Approval Matrix Line" name="approved_matrix_ids"
                      attrs="{'invisible' : [('approval_matrix_id', '=', False)]}">
                    <field name="approved_matrix_ids" context="{'approved_matrix_ids': approved_matrix_ids}">
                        <tree editable="bottom">
                            <field name="sequence"/>
                            <field name="user_ids" widget="many2many_tags"/>
                            <field name="minimum_approver"/>
                            <field name="state_char"/>
                            <field name="time_stamp"/>
                            <field name="feedback"/>
                        </tree>
                    </field>
                </page>
            </xpath>

            <xpath expr="//page[last()]" position="after">
                <page string="Fiscal Depreciation" groups="equip3_accounting_accessright_setting.group_account_asset_category_fiscal">
                    <field name="depreciation_line_ids_fiscal" mode="tree" options="{'reload_whole_on_button': true}">
                        <tree string="Depreciation Lines" create="false">
                            <field name="depreciation_date_fiscal"/>
                            <field name="amount_fiscal" widget="monetary" string="Depreciation"/>
                            <field name="depreciated_value_fiscal" readonly="1"/>
                            <field name="remaining_value_fiscal" readonly="1" widget="monetary" string="Residual"/>
                        </tree>
                        <form string="Fiscal Depreciation Lines" create="false">
                            <group>
                                <group>
                                    <field name="name"/>
                                    <field name="sequence"/>
                                </group>
                                <group>
                                    <field name="amount_fiscal" widget="monetary"/>
                                    <field name="depreciation_date_fiscal"/>
                                    <field name="depreciated_value_fiscal"/>
                                    <field name="remaining_value_fiscal"/>
                                </group>
                            </group>
                        </form>
                    </field>
                </page>
                <page string="Fiscal Information" groups="equip3_accounting_accessright_setting.group_account_asset_category_fiscal">
                    <group>
                        <field name="method_fiscal" widget="radio" attrs="{'invisible': [('type','=','sale')]}"/>
                        <field name="first_depreciation_date_fiscal" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="is_monthly_depreciation_fiscal"  attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="is_reset_january_fiscal" attrs="{'invisible': [('is_monthly_depreciation_fiscal', '=', True)], 'readonly': [('state', '!=', 'draft')]}"/>
                        <!-- <field name="is_reset_january_fiscal" attrs="{'invisible': [('method_fiscal', '!=', 'double_declining'), ('is_monthly_depreciation_fiscal', '!=', True)]}"/> -->
                        <field name="months_remaining_fiscal" attrs="{'invisible': [('method_fiscal', '!=', 'double_declining')]}"/>
                        <field name="asset_type" widget="radio" attrs="{'invisible': [('method_fiscal','!=','linear')], 'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="asset_type_1" widget="radio" attrs="{'invisible': [('method_fiscal','=','linear')], 'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="sub_asset_type" string="" widget="radio" attrs="{'invisible': [('asset_type','=','non_building')], 'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="non_building_type" string="" widget="radio" attrs="{'invisible': [('asset_type','=','building')] , 'readonly': [('state', '!=', 'draft')]}"/>
                    </group>
                    <group>
                        <field name="fiscal_prorata_temporis" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="method_number_fiscal" readonly="1" force_save="1"/>
                        <label for="method_period_fiscal" string="One Entry Every"/>
                            <div>
                                <field name="method_period_fiscal" nolabel="1" class="oe_inline"/>
                                months
                            </div>
                    </group>
                </page>
            </xpath>
            <field name="method_end" position="attributes">
                <attribute name='readonly'>1</attribute>
            </field>
            <field name="entry_count" position="attributes">
                <attribute name='string'>Entries</attribute>
            </field>
            <xpath expr="//div[@class='oe_chatter']" position="replace">
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </xpath>
            <field name="method" position="attributes">
                <attribute name="readonly">0</attribute>
            </field>
        </field>
    </record>


    <record model="ir.ui.view" id="view_account_asset_category_fiscal_form">
        <field name="name">account.asset.category.fiscal.form</field>
        <field name="model">account.asset.category.fiscal</field>
        <field name="arch" type="xml">
            <form string="Fiscal Asset Group">
                <sheet>
                    <group>
                        <group colspan="2">
                            <field name="asset_category_id" options="{'no_create': True}"/>
                        </group>

                        <group string="Depreciation Method">
                            <field name="method" widget="radio"/>
                            <field name="asset_type" widget="radio" attrs="{'invisible': [('method','!=','linear')]}"/>
                            <field name="asset_type_1" widget="radio" attrs="{'invisible': [('method','=','linear')]}"/>
                            <field name="sub_asset_type" string="" widget="radio" attrs="{'invisible': [('asset_type','!=','building')]}"/>
                            <field name="non_building_type" string="" widget="radio" attrs="{'invisible': [('asset_type','!=','non_building')]}"/>
                            <field name="prorata" invisible="1"/>
                            <field name="cut_off_asset_date" invisible="1"/>
                            <field name="method_number_fiscal" invisible="1"/>
                            <field name="is_monthly_depreciation" invisible="1"/>
                            <field name="is_reset_january" invisible="1"/>
                            <field name="double_declining_method_number" invisible="1"/>
                            <field name="double_declining_method_period" invisible="1"/>
                            <field name="is_fiscal_asset_type" invisible="1"/>
                        </group>

                        <group string="Periodicity">
                            <field name="method_time" string="Time Method Based On" widget="radio"/>
                            <field name="method_number" readonly="1" force_save="1" attrs="{'invisible':[('method_time','!=','number')] }"/>
                            <label for="method_period" string="One Entry Every"/>
                            <div>
                                <field name="method_period" nolabel="1" class="oe_inline"/>
                                months
                            </div>
                            <field name="method_end" attrs="{'invisible':[('method_time','!=','end')]}"/>
                        </group>


                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_account_asset_cip">
        <field name="name">account.asset.cip</field>
        <field name="model">asset.cip</field>
        <field name="arch" type="xml">
            <form string="Construction In Progress">

                <header>
                    <button class="oe_highlight" name="action_post" string="Post" type="object" states="in_progress"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,posted"/>
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="open_entries"  type="object" icon="o-hm-smart-all-projects">
                            <field string="Journal Entries" name="entry_count" widget="statinfo" />
                        </button>
                        <button class="oe_stat_button" name="open_assets"  type="object" icon="o-hm-smart-all-asset-sale">
                            <field string="Assets" name="asset_count" widget="statinfo" />
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1 class="mt0">
                            <field name="name" nolabel='1' readonly='1'/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="asset_name"/>
                            <field name="asset_category" required="1"/>
                            <field name="cip_account" required="1"/>
                            <field name="currency"/>
                            <field name="branch_id" required="1" options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                    </group>

                    <group>
                    <field name="lines" nolabel = "1">
                        <tree editable="bottom">
                            <field name="product_id"/>
                            <field name="label"/>
                            <field name="account_id" required="1"/>
                            <field name="amount"/>
                            <field name="move_check" widget= "deprec_lines"/>
                            <field name="move_posted_check" invisible="1"/>
                        </tree>
                    </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_account_asset_cip_tree">
        <field name="name">asset.cip.tree</field>
        <field name="model">asset.cip</field>
        <field name="arch" type="xml">
            <tree string="Construction In Progress">
                <field name="name"/>
                <field name="branch_id"/>
                <field name="amount_total" class="text-center"/>
                <field name="currency"/>
                <field name="state" widget="badge" decoration-info="state =='in_progress'" decoration-muted="state =='draft'"
        decoration-success="state =='posted'" decoration-warning="state not in('draft','posted','in_progress')" attrs="{'invisible':[('state','=','draft')]}"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_account_asset_category_fiscal_tree">
        <field name="name">account.asset.category.fiscal.tree</field>
        <field name="model">account.asset.category.fiscal</field>
        <field name="arch" type="xml">
            <tree string="Fiscal Asset Group">
                <field name="asset_category_id"/>
                <field name="method"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_account_asset_category_fiscal">
        <field name="name">Fiscal Asset Group</field>
