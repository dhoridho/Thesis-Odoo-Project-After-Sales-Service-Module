<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_invoice_asset_form" model="ir.ui.view">
        <field name="name">view.invoice.asset.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/div[@name='button_box']" position="inside">
                <field name="is_from_asset" invisible="1"/>
                <button name="button_open_invoice_asset" type="object" class="oe_stat_button" icon="o-hm-smart-all-bills" attrs="{'invisible': ['|',('is_from_asset','=', False),('move_type','!=','entry')]}">
                    <!-- <field name="invoice_asset_count"/> -->
                    <span>Invoice Asset</span>
                </button>
            </xpath>
        </field>
    </record>
</odoo>