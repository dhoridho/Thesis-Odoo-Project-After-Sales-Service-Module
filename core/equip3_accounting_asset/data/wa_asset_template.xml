<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="email_template_req_asset_wa" model="mail.template">
        <field name="name">Request for Approval Assets</field>
        <field name="email_from">${ctx.get('email_from')}</field>
        <field name="email_to">${ctx.get('email_to')}</field>
        <field name="subject">Request For Assets</field>
        <field name="model_id" ref="om_account_asset.model_account_asset_asset"/>
        <field name="auto_delete" eval="True"/>
        <field name="body_html">
            <![CDATA[<div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px;">
            <p style="margin: 0px; padding: 0px; font-size: 13px;">
                Dear ${approver_name},${br}
                You have approval pending that needs your decision to approve or reject the assets.${br}
                ${submitter_name} has requested a ${name_asset} as ${category_id_asset} for ${value_asset} ${currency_id_asset}${br}
                You can approve or reject the assets by clicking this link:
                ${url}${br}
                Thank you,
                This is an automatically generated message, please do not reply.
            </p>
            ]]>
        </field>
    </record>

    <record id="email_template_appr_asset_wa" model="mail.template">
        <field name="name">Approval Assets</field>
        <field name="email_from">${ctx.get('email_from')}</field>
        <field name="email_to">${ctx.get('email_to')}</field>
        <field name="subject">Approval For Assets</field>
        <field name="model_id" ref="om_account_asset.model_account_asset_asset"/>
        <field name="auto_delete" eval="True"/>
        <field name="body_html">
            <![CDATA[<div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px;">
            <p style="margin: 0px; padding: 0px; font-size: 13px;">
                Dear ${submitter_name},${br}
                We have received a response to your request for an Assets on ${create_date}.${br}
                This notification serves as confirmation that your assets has been approved.${br}
                Thank you,
                This is an automatically generated message, please do not reply.
            </p>
            ]]>
        </field>
    </record>

    <record id="email_template_rjct_asset_wa" model="mail.template">
        <field name="name">Rejected Assets</field>
        <field name="email_from">${ctx.get('email_from')}</field>
        <field name="email_to">${ctx.get('email_to')}</field>
        <field name="subject">Rejected For Assets</field>
        <field name="model_id" ref="om_account_asset.model_account_asset_asset"/>
        <field name="auto_delete" eval="True"/>
        <field name="body_html">
            <![CDATA[<div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px;">
            <p style="margin: 0px; padding: 0px; font-size: 13px;">
                Dear ${submitter_name},${br}
                We have received a response to your request for an Assets on ${create_date}.${br}
                This notification serves as confirmation that your assets has been rejected.${br}
                Here is the feedback from ${approver_name}:
                ${feedback}${br}
                Thank you,
                This is an automatically generated message, please do not reply.
            </p>
            ]]>
        </field>
    </record>

</odoo>
