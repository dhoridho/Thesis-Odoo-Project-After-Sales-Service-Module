<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- academic.tracking.transcript form view -->
    <record id="academic_tracking_transcript_view_form" model="ir.ui.view">
        <field name="name">academic.tracking.transcript.view.form</field>
        <field name="model">academic.tracking.transcript</field>
        <field name="arch" type="xml">
            <form string="Student Transcript">
                <group>
                    <field name="student" required="1"/>
                    <field name="program" required="1"/>
                    <field name="intake" required="1"/>
                    <field name="print_all"/>
                    <field name="academic_year" attrs="{'invisible': [('print_all', '=', True)]}"/>
                    <field name="term" attrs="{'invisible': [('print_all', '=', True)]}" widget="many2many_tags"/>
                </group>
                <footer>
                    <button name="button_print_transcript" type="object" string="Print"/>
                    <button name="print_and_send_email" type="object" string="Print and Send Email" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- academic.tracking.transcript action window -->
    <record id="academic_tracking_transcript_action" model="ir.actions.act_window">
        <field name="name">Student</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">academic.tracking.transcript</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="academic_tracking_transcript_view_form"/>
        <field name="target">new</field>
    </record>

    <record id="wizard_student_transcript" model="ir.actions.report">
        <field name="name">Student Transcript</field>
        <field name="model">academic.tracking.transcript</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">equip3_school_report.wizard_student_transcript_tmp</field>
        <field name="report_file">equip3_school_report.wizard_student_transcript_tmp</field>
        <field name="binding_model_id" ref="equip3_school_operation.model_academic_tracking_transcript"/>
        <field name="binding_type">report</field>
    </record>

    <record id="wizard_student_transcript_web" model="ir.actions.report">
        <field name="name">Student Transcript Web</field>
        <field name="model">academic.tracking.transcript</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">equip3_school_report.wizard_student_transcript_tmp_web</field>
        <field name="report_file">equip3_school_report.wizard_student_transcript_tmp_web</field>
        <field name="binding_model_id" ref="equip3_school_operation.model_academic_tracking_transcript"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
