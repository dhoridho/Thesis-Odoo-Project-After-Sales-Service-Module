<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="view_subject_view_form" model="ir.ui.view">
        <field name="name">view.subject.wizard</field>
        <field name="model">view.subject</field>
        <field name="arch" type="xml">
            <form string="Generate Classes">
                <sheet>
                    <group>
                        <group>
                            <field name="academic_id" 
                            invisible="1"
                             />
                            <field name="school_id"/>
                            <field name="program_id"/>
                            <field name="intake_id"/>
                        </group>
                        <group>
                            <field name="academic_year_id"/>
                            <field name="term_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Subject">
                            <field name="view_subject_ids">
                                <tree editable='bottom' create="0">
                                    <field name='core_subject_id' readonly="1" force_save="1"/>
                                    <field name="elective_subject_ids" readonly="1" force_save="1"/>
                                    <field name="status" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <group colspan="1">
                        <button name="save_view_subject" string="Save" type="object" class="oe_highlight" />
                        <button class="oe_link" special="cancel" string="Cancel" />
                    </group>
                </footer>
            </form>
        </field>
    </record>

</odoo>
