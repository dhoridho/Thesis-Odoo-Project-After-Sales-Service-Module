<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="generate_group_class_wizard_view_form" model="ir.ui.view">
        <field name="name">generate.group.class.wizard.view.form</field>
        <field name="model">generate.group.class.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                </header>
                <sheet>
                    <group>
                        <div class="alert alert-warning" role="alert" colspan="2" attrs="{'invisible': [('show_warning', '=', False)]}">
                            Unequal Group Class!
                        </div>
                        <field name="number"></field>
                        <field name="student_ids" invisible="1"></field>
                        <field name="available_student_ids" invisible="1"></field>
                        <field name="count_available" invisible="1"></field>
                        <field name="show_warning" invisible="1"></field>
                    </group>
                </sheet>
                <footer>
                    <button name="button_generate" string="Generate" type="object" class="oe_highlight" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
