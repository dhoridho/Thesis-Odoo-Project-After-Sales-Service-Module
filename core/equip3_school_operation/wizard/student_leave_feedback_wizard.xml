<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="student_leave_feedback" model="ir.ui.view">
            <field name="name">student.leave.feedback.wizard.form</field>
            <field name="model">student.leave.feedback.wizard</field>
            <field name="arch" type="xml">
                <form string="Reject Reason">
                    <group>
                        <field name="name" required="1" string="Reason" />
                    </group>

                    <footer>
                        <button name="submit" type="object" string="Reject" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>

