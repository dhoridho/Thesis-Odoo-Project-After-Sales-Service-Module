<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_form_class_schedule" model="ir.ui.view">
            <field name="name">class.schedule.wizard</field>
            <field name="model">class.schedule</field>
            <field name="arch" type="xml">
                <form string="Class Schedule">
                    <sheet>
                        <group>
                            <field name="year_id" options="{'no_create': True, 'no_create_edit':True}"/>
                            <field name="term_id" options="{'no_create': True, 'no_create_edit':True}"/>
                            <field name="teacher_id" invisible="1" />
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_print_report" string="Print" type="object" class="oe_highlight" />
                        <button class="oe_link" special="cancel" string="Cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="view_form_teacher_class_schedule" model="ir.ui.view">
            <field name="name">teacher.class.schedule.wizard</field>
            <field name="model">class.schedule</field>
            <field name="arch" type="xml">
                <form string="Class Schedule">
                    <sheet>
                        <group>
                            <field name="year_id" options="{'no_create': True, 'no_create_edit':True}"/>
                            <field name="term_id" options="{'no_create': True, 'no_create_edit':True}"/>
                            <field name="teacher_id" attrs="{'invisible': [('print_all_teacher_class_schedule', '=', True)]}"/>
                            <field name="print_all_teacher_class_schedule"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_print_report" string="Print" type="object" class="oe_highlight" />
                        <button class="oe_link" special="cancel" string="Cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_open_teacher_class_schedule_wizard" model="ir.actions.act_window">
            <field name="name">Class Schedule</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">class.schedule</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_form_teacher_class_schedule" />
            <field name="target">new</field>
        </record>
    
        <menuitem id="menu_generate_teacher_class_schedule"
            name="Teacher Class Schedule"
            parent="menu_class_schedule"
            action="action_open_teacher_class_schedule_wizard"
            groups="school.group_school_administration"
            sequence="15"
        />

</odoo>
