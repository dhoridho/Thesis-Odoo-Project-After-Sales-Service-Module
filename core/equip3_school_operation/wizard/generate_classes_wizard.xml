<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_form_generate_classes" model="ir.ui.view">
            <field name="name">generate.classes.wizard</field>
            <field name="model">generate.classes</field>
            <field name="arch" type="xml">
                <form string="Generate Classes">
                    <sheet>
                        <group>
                            <field name="timetable_type" readonly="1"/>
                            <field name="timetable_name" options="{'no_create': True, 'no_create_edit':True}" widget="many2many_tags"/>
                        </group>
                    </sheet>
                    <footer>
                        <group colspan="1">
                            <button name="generate_classes" string="Generate" type="object" class="oe_highlight" />
                            <button class="oe_link" special="cancel" string="Cancel" />
                        </group>
                    </footer>
                </form>
            </field>
        </record>
    
        <record id="action_generate_classes" model="ir.actions.act_window">
            <field name="name">Generate Classes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">generate.classes</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="help">
                Click to Create New Generate Classes.
            </field>
        </record>
    
        <menuitem id="menu_generate_classes"
                  name="Generate Classes"
                  parent="equip3_school_operation.menu_class_schedule"
                  action="action_generate_classes"
                  groups="school.group_school_administration"
                  sequence="4"/>

</odoo>
