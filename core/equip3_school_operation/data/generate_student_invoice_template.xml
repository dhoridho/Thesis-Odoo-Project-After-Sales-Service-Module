<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="generate_student_invoice_email_templates" model="mail.template">
            <field name="name">Generate Student Invoice</field>
            <field name="email_from">${ctx.get('email_from')}</field>
            <field name="email_to">${object.partner_id.email | safe}</field>
            <field name="subject">Automatic Invoice</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="auto_delete" eval="False"/>
            <field name="report_template" ref="account.account_invoices_without_payment"/>
            <field name="report_name">Invoice Attachment</field>
            <field name="body_html"><![CDATA[
            <div>
                <p>Dear ${object.partner_id.name},</p>
                <p>There are still unpaid payment. If you pass the time limit, you will automatically get a fine according to the provisions.</p>
                <p>Thank you,</p>
                <p>This is an automatically generated email, please do not reply.</p>
            </div>
            ]]></field>
        </record>
    </data>
</odoo>
