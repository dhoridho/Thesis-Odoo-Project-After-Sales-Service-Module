<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ems_move_term_view_tree" model="ir.ui.view">
        <field name="name">ems.move.term.view.tree</field>
        <field name="model">ems.move.term</field>
        <field name="arch" type="xml">
            <tree string="EMS Move Term">
                <field name="school_id" />
                <field name="academic_year_id" />
                <field name="term_id" />
                <field name="program_id" />
                <field name="intake_id" />
                <field name="state" />
            </tree>
        </field>
    </record>
    <record id="ems_move_term_view_form" model="ir.ui.view">
        <field name="name">ems.move.term.view.form</field>
        <field name="model">ems.move.term</field>
        <field name="arch" type="xml">
            <form string="EMS Move Term">
                <header>
                    <button string="Move" name="button_move" type="object" class="oe_highlight" attrs="{'invisible': [('state', '=', 'moved')]}"/>
                    <field name="state" widget="statusbar" clickable="False"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="school_id" />
                            <field name="academic_year_id" domain="[('current', '=', True)]" />
                            <field name="term_id" domain="[('year_id', '=', academic_year_id)]" />
                        </group>
                        <group>
                            <field name="related_program_ids" widget="many2many_tags" invisible="1"/>
                            <field name="program_id" domain="[('id', 'in', related_program_ids)]"/>
                            <field name="intake_id" domain="[('school_id', '=', school_id), ('year', '=', academic_year_id), ('term_id', '=', term_id), ('standard_id', '=', program_id)]"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="student" string="Student">
                            <field name="student_line_ids">
                                <tree editable="bottom" create="0" delete="0">
                                    <field name="student_id" readonly="1" force_save="1"/>
                                    <field name="current_term_id" readonly="1" force_save="1"/>
                                    <field name="update_term_id" />
                                    <field name="current_intake_id" readonly="1" force_save="1"/>
                                    <field name="update_intake_id" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="ems_move_term_action" model="ir.actions.act_window">
        <field name="name">Move Term</field>
        <field name="res_model">ems.move.term</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        id="equip3_school_operation.ems_move_term_menu"
        name="Move Term"
        action="ems_move_term_action"
        parent="school.menu_configuration"
        active="false"
        sequence="10"/>
    <record model="ir.ui.menu" id="school_fees.menu_student_fees_structure_form">
        <field name="sequence">15</field>
    </record>
    <record model="ir.ui.menu" id="equip3_school_operation.menu_approval_matrix_form">
        <field name="sequence">15</field>
    </record>
</odoo>
