                    <span style="margin-top: -16px;margin-left: 8px;">Hostel</span>
                </button>
            </xpath>
        </field>
    </record>-->

    <record id="academic_tracking_action" model="ir.actions.act_window">
        <field name="name">Academic Tracking</field>
        <field name="res_model">academic.tracking</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="academic_trackings_menu"
        name="Academic Trackings"
        parent="school.menu_ems" sequence="12" groups="base.group_user" />

    <record id="academic_trackings_menu" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-parent-school-class-schedule</field>
    </record>

    <menuitem
        id="academic_tracking_menu"
        name="Academic Tracking"
        action="equip3_school_operation.academic_tracking_action"
        parent="equip3_school_operation.academic_trackings_menu"
        sequence="10"/>

    <menuitem
        id="subject_score_menu"
        name="Scoring"
        action="equip3_school_operation.subject_score_action"
        parent="equip3_school_operation.academic_trackings_menu"
        sequence="20"/>

    <record model="ir.ui.menu" id="school.admission_register">
        <field name="equip_icon_class">o-hm-sidebar-main-school-admission-register</field>
    </record>

</odoo>
