        <field name="inherit_id" ref="school_hostel.view_student_student_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='%(school_hostel.action_hostel_student_button)d']" position="replace">
                <button name="%(school_hostel.action_hostel_student_button)d" type="action" class="oe_right oe_stat_button" attrs="{'invisible':[('state', 'in', ['draft','terminate','alumni','cancel'])]}" groups="school_hostel.group_hostel_manager,school_hostel.group_hostel_user">
