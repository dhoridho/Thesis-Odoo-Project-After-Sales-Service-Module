<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="academic_tracking_view_search" model="ir.ui.view">
        <field name="name">academic.tracking.view.search</field>
        <field name="model">academic.tracking</field>
        <field name="arch" type="xml">
            <search>
                <field name="student_id"/>
            </search>
        </field>
    </record>

    <record id="academic_tracking_view_tree" model="ir.ui.view">
        <field name="name">academic.tracking.view.tree</field>
        <field name="model">academic.tracking</field>
        <field name="arch" type="xml">
            <tree string="" create="false" edit="false">
                <field name="student_id"/>
                <field name="program_id"/>
                <field name="school_id"/>
                <field name="branch_id" invisible="1"/>
                <field name="related_program_ids" widget="many2many_tags" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="academic_tracking_view_form" model="ir.ui.view">
        <field name="name">academic.tracking.view.form</field>
        <field name="model">academic.tracking</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <header>
                    <button name="%(academic_tracking_transcript_action)d" type="action" string="TRANSCRIPT"  class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="attendance_action_btn" type="object">
                            <i class="o-hm-icon o-hm-smart-school-academic-tracking" style="font-size:30px;margin-left:4px;"/>
                            <span style="margin-top: -16px;margin-left: 8px;">Attendance</span>
                        </button>
                        <button name="subject_score_action_form_btn" type="object">
                            <i class="o-hm-icon o-hm-smart-school-scoring" style="font-size:30px;margin-left:4;"/>
                            <span style="margin-top: -16px;margin-left: 8px;">Scoring</span>
                        </button>
                    </div>
                    <group string="Academic Tracking Detail">
                        <group>
                            <field name="student_id"/>
                            <field name="program_id"/>
                            <field name="school_id"/>
                        </group>
                        <group>
                            <field name="total_credit"/>
                            <field name="pass_credit"/>
                            <field name="pending_credit"/>
                            <field name="branch_id" invisible="1"/>
                            <field name="related_program_ids" widget="many2many_tags" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="intake_page" string="Intake">
                            <field name="intake_ids">
                                <tree editable="bottom">
                                    <field name="intake_id"/>
                                    <field name="group_class_id"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>
                        <page name="all_score_subject_page" string="All Subject">
                            <field name='all_score_subject_ids'>
                                <tree editable="bottom" string="Subject">
                                    <field name="intake_id"/>
                                    <field name="year"/>
                                    <field name="subject_id"/>
                                    <field name="year_id"/>
                                    <field name="term_id"/>
                                    <field name="credits"/>
                                    <field name="presence_persentage" widget="percentage"/>
                                    <field name="grade"/>
                                    <field name="subject_status"/>
                                </tree>
                            </field>
                        </page>
                        <page name="current_score_subject_page" string="Current Subject">
                            <field name='current_score_subject_ids'>
                                <tree editable="bottom" string="Subject">
                                    <field name="year"/>
                                    <field name="subject_id"/>
                                    <field name="year_id"/>
                                    <field name="term_id"/>
                                    <field name="credits"/>
                                    <field name="subject_status"/>
                                </tree>
                            </field>
                        </page>
                        <page name="pass_score_subject_page" string="Pass Subject">
                            <field name='pass_score_subject_ids'>
                                <tree editable="bottom" string="Subject">
                                    <field name="year"/>
                                    <field name="subject_id"/>
                                    <field name="year_id"/>
                                    <field name="term_id"/>
                                    <field name="credits"/>
                                    <field name="subject_status"/>
                                </tree>
                            </field>
                        </page>
                        <page name="failed_score_subject_page" string="Failed Subject">
                            <field name='failed_score_subject_ids'>
                                <tree editable="bottom" string="Subject">
                                    <field name="year"/>
                                    <field name="subject_id"/>
                                    <field name="year_id"/>
                                    <field name="term_id"/>
                                    <field name="credits"/>
                                    <field name="subject_status"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_school_academic_tracking_form_btn" model="ir.actions.act_window">
        <field name="name">Academic Tracking</field>
        <field name="res_model">academic.tracking</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('student_id', '=', active_id)]</field>
        <field name="context">{}</field>
    </record>

    <!-- student form -->
    <record id="view_student_student_form_1_inherit_school" model="ir.ui.view">
        <field name="name">student.student.view.form.inherit</field>
        <field name="model">student.student</field>
        <field name="inherit_id" ref="school.view_student_student_form_1"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='%(assignment.action_school_student_assignment_form_btn)d']" position="before">
                <button name="attendance_action_btn" type="object" class="oe_stat_button">
                    <i class="o-hm-icon o-hm-sidebar-sub-hrm-my-attendance" style="font-size:30px;"/>
                    <span style="margin-top: -16px;margin-left: 8px;">Attendance</span>
                </button>
                <button name="%(action_school_academic_tracking_form_btn)d" type="action" class="academic_tracking oe_stat_button">
                    <i class="o-hm-icon o-hm-sidebar-sub-school-academic-tracking" style="font-size:30px;"/>
                    <span style="margin-top: -16px;margin-left: 8px;">Academic Tracking</span>
                </button>
            </xpath>
        </field>
    </record>
    <!-- end of student form -->

    <record id="assignment_view_student_student_form2" model="ir.ui.view">
        <field name="model">student.student</field>
        <field name="inherit_id" ref="assignment.view_student_student_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='%(assignment.action_school_student_assignment_form_btn)d']" position="replace">
                <button name="%(assignment.action_school_student_assignment_form_btn)d" type="action" class="oe_stat_button" attrs="{'invisible':[('state', 'in', ['draft','terminate','alumni','cancel'])]}" groups="school.group_school_administration,school.group_school_teacher,school.group_school_student">
                    <i class="o-hm-icon o-hm-smart-school-assignment" style="font-size:30px;"/>
                    <span style="margin-top: -16px;margin-left: 8px;">Assignment</span>
                </button>
            </xpath>
        </field>
    </record>

    <record id="exam_view_student_student_form2" model="ir.ui.view">
        <field name="model">student.student</field>
        <field name="inherit_id" ref="exam.view_student_student_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='%(exam.action_stu_result_form)d']" position="replace">
                <button name="%(exam.action_stu_result_form)d" class="oe_inline oe_stat_button" type="action" attrs="{'invisible':[('state', 'in', ['draft','terminate','alumni','cancel'])]}" groups="school.group_school_administration,school.group_school_teacher,school.group_school_student">
                    <i class="o-hm-icon o-hm-smart-school-exam" style="font-size:30px;"/>
                    <span style="margin-top: -16px;margin-left: 8px;">Result</span>
                </button>
            </xpath>
        </field>
    </record>

