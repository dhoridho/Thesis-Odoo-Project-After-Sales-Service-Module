<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sg_school_res_user_view_form_inherited" model="ir.ui.view">
        <field name="name">sg.school.res.users.form</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="related_student_id" />
            </xpath>
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="school_ids" widget="many2many_tags" domain="[('company_id', 'in', company_ids)]"  options="{'no_create': True, 'no_create_edit': True, 'no_open': True}" context="{'is_res_users': True}"/>
            </xpath>
            <xpath expr="//field[@name='branch_ids']" position="attributes">
                <attribute name="domain">[('school_id', 'in', school_ids)]</attribute>
                <attribute name="context">{'is_res_users': True}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
