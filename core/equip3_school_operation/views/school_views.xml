    <record id="school_approval_matrix_form" model="ir.ui.view">
        <field name="name">school.approval.matrix.form</field>
        <field name="model">school.approval.matrix</field>
        <field name="arch" type="xml">
            <form string="Admission Approval Matrix">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="school_id" required="1" options="{'no_create': True, 'no_open': True}"/>
                        </group>
                        <group>
                            <!-- <field name="program_ids" invisible="1"/> -->
                            <field name="program_id" required="1"/>
