    <!-- Add kanban view Standard -->
    <record model="ir.ui.view" id="standard_standard_kanban_view">
        <field name="name">Standard Kanban</field>
        <field name="model">standard.standard</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban default_group_by="school_id" nocreate="1" create="false">
                <!--<field name="sequence" />-->
                <field name="name" />
                <field name="code" />
                <field name="color" />
                <field name="active" invisible="1"/>
                <templates>
                    <t t-name="kanban-box">
                        <t t-set="color" t-value="kanban_color(record.color.raw_value || record.name.value)" />
                        <div t-att-class="color + (record.color.raw_value == 1 ? ' oe_kanban_color_alert' : '')">
                            <div class="oe_kanban_box oe_kanban_color_border">
                                <div class="oe_kanban_box_header oe_kanban_color_bgdark oe_kanban_color_border oe_kanban_draghandle">
                                    <table class="oe_kanban_table">
                                        <tr>
                                           <!-- <td class="oe_kanban_title1" align="left" valign="middle">
                                                <div>
                                                    Sequence :
                                                    <field name="sequence" /></div>
                                            </td>
                                            -->
                                        </tr>
                                    </table>
                                </div>
                                <div class="oe_kanban_box_content oe_kanban_color_bglight oe_kanban_box_show_onclick_trigger oe_kanban_color_border">
                                    <table class="oe_kanban_table">
                                        <tr>
                                            <td valign="top" align="left">
                                                <div class="oe_kanban_title2">
                                                    <div>
                                                        Name :
                                                        <field name="name"/></div>
                                                </div>
                                                <div class="oe_kanban_title3">
                                                    <div>
                                                        Code :
                                                        <field name="code" /></div>
                                                </div>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="oe_kanban_buttons_set oe_kanban_color_border oe_kanban_color_bglight oe_kanban_box_show_onclick">
                                    <div class="oe_kanban_left">
                                        <a role="button" string="Edit" class="btn btn-sm btn-default fa fa-pencil" type="edit" aria-label="edit" />
                                        <a role="button" string="Delete" class="btn btn-sm btn-default fa fa-trash" type="delete" aria-label="delete"/>
                                        <a role="button" string="Change Color" icon="color-picker" type="color" name="color" />
                                    </div>
                                    <br class="oe_kanban_clear" />
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

     <record id="view_standard_standard_tree_inherit" model="ir.ui.view">
            <field name="model">standard.standard</field>
            <field name="inherit_id" ref="school.view_standard_standard_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='sequence']" position="attributes">
                        <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='sequence']" position="after">
                    <field name="active" invisible="1"/>
                </xpath>
            </field>
     </record>

    <record id="view_standard_standard_form_inherit" model="ir.ui.view">
        <field name="model">standard.standard</field>
        <field name="inherit_id" ref="school.view_standard_standard_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="replace">
                <sheet>
                    <group>
                        <group>
                            <field name="title" string="Name"/>
                            <field name="name" string="Title"/>
                            <field name="fees_ids" domain="[('company_id', '=', company_id)]"/>
                        </group>
                        <group>
                            <field name="company_id" />
                            <field name="school_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="branch_id" invisible="1"/>
                            <field name="code"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <field name="description" colspan="4" placeholder="Description"/>
                    </group>
                    <notebook>
                        <page string="Intake">
                            <field name="intake_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name='user_id' string="Teacher"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Subject">
                            <field name="program_subject_ids">
                                <tree editable="bottom">
                                    <field name="subject_id" string="Subject"/>
                                    <field name="subject_type" string="Subject Type"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </sheet>
            </xpath>
        </field>
    </record>

