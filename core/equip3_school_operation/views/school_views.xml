    <!--form view subject-->
    <record id="view_subject_subject_form_inherit" model="ir.ui.view">
        <field name="model">subject.subject</field>
        <field name="inherit_id" ref="school.view_subject_subject_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="replace">
                <sheet>
                    <div class="oe_button_box" name="buttons">
                        <button class="oe_stat_button" name="action_view_intake" type="object">
                            <i class="o-hm-icon o-hm-smart-school-intake" style="font-size:30px;"/>
                            <span style="margin-top: -16px;margin-left: 8px;">Intake</span>
                        </button>
                    </div>
                    <label for="subject_type"/>
                    <div class="d-flex">
                        <field name="subject_type" widget="radio" options="{'horizontal': true}"/>
                    </div>
                    <group>
                        <group>

                            <field name="name" placeholder="Subject Name"/>
                            <field name="active" invisible="1"/>
                            <field name="credits" placeholder="Credit"/>
                            <field name="standard_ids" widget="many2many_tags" required= "1" string="Program"/>
                        </group>
                        <group>
                            <field name="code" placeholder="Subject Code"/>
                            <field name="is_practical"/>
                            <field name="syllabus" filename="file_name"/>
                            <field name="file_name" invisible="1"/>
                            <field name="related_term_ids" widget="many2many_tags" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Teachers">
                            <field name="teacher_ids" nolabel="1" colspan="4"
                                   options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                        </page>
                    </notebook>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </sheet>
            </xpath>
        </field>
    </record>

    <record id="view_student_fees_structure_form_inherit" model="ir.ui.view">
        <field name="model">student.fees.structure</field>
        <field name="inherit_id" ref="school_fees.view_student_fees_structure_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group[1]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//sheet/notebook" position="before">
                <group name="main">
                    <group name="left_group">
                        <field name="name" placeholder="Name"/>
                        <field name="company_id" />
                    </group>
                    <group name="right_group">
                        <field name="code" placeholder="Code"/>
                    </group>
                </group>
            </xpath>
            <xpath expr="//field[@name='line_ids']" position="attributes">
                <attribute name="domain">[('company_id', '=', company_id)]</attribute>
            </xpath>
            <xpath expr="//sheet/notebook" position="after">
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </xpath>
            <xpath expr="//page" position="attributes">
                <attribute name="string">Fees Head</attribute>
            </xpath>
        </field>
    </record>
