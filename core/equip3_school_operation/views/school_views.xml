    <record id="view_form_inherit_student_student" model="ir.ui.view">
        <field name="name">student.student.form.inherit</field>
        <field name="model">student.student</field>
        <field name="inherit_id" ref="school.view_student_student_form_1"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='city']" position="attributes">
                <attribute name="required">0</attribute>
            </xpath>
            <xpath expr="//field[@name='state_id']" position="attributes">
                <attribute name="required">0</attribute>
            </xpath>
            <xpath expr="//notebook/page[10]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//notebook/page[10]" position="after">
                <page string="History" groups="school.group_school_administration,school.group_school_teacher,school.group_school_parent,school.group_school_student">
                    <field name="history_ids" readonly="1" nolabel="1" colspan="4">
                        <tree string="History">
                            <field name="academice_year_id" required="1"/>
                            <field name="school_id"/>
                            <field name="branch_id" invisible="1"/>
                            <field name="program_id"/>
                            <field name="standard_id"/>
                            <field name="group_class_id"/>
                            <field name="fees_ids"/>
                            <field name="status"/>
                        </tree>
                        <form string="History">
                            <group col="4" colspan="4">
                                <field name="academice_year_id" placeholder="Acadamic Year" />
                                <field name="school_id"/>
                                <field name="program_id" invisible="1"/>
                                <field name="branch_id" invisible="1"/>
                                <field name="status"/>
                                <field name="standard_id" placeholder="Select or Create Standard"/>
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>
            <xpath expr="//page[4]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_academic_year_form_inherit" model="ir.ui.view">
        <field name="model">academic.year</field>
        <field name="inherit_id" ref="school.view_academic_year_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page/field[@name='month_ids']" position="attributes">
                <attribute name="options"></attribute>
            </xpath>
            <xpath expr="//notebook/page/field[@name='month_ids']" position="attributes">
                <attribute name="domain">[('year_id', '!=', id)]</attribute>
            </xpath>
            <xpath expr="//header" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//notebook/page" position="attributes">
                <attribute name="string">Term</attribute>
            </xpath>
            <xpath expr="//field[@name='sequence']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='month_ids']" position="replace">
                <field name="month_ids" nolabel="1" colspan="4" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}">
                    <tree string="Months">
                        <field name="name" />
                        <field name="code" />
                        <field name="enrollment_date_start" required="1"/>
                        <field name="enrollment_date_stop" required="1"/>
                        <field name="date_start" />
                        <field name="date_stop" />
                        <field name="billing_date"/>
                    </tree>
                    <form string="Months">
                        <group>
                            <group>
                                <field name="name" placeholder="Name" />
                                <field name="enrollment_date_start" required="1" placeholder="Enrollment Start"/>
                                <field name="date_start" placeholder="Start Date" />
                                <field name="billing_date" required="1" placeholder="Billing Date"/>
                                <field name="description" colspan="4" placeholder="Description"/>
                            </group>
                            <group>
                                <field name="code" placeholder="Code" />
                                <field name="enrollment_date_stop" required="1" placeholder="Enrollment End"/>
                                <field name="date_stop" placeholder="Stop Date" />
                            </group>
                        </group>
                    </form>
                </field>
            </xpath>
        </field>
    </record>

