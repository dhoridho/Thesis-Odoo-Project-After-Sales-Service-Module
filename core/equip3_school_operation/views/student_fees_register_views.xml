<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="equip3_school_operation_inherit_view_student_fees_register_form" model="ir.ui.view">
        <field name="name">student.fees.register.form.inherit</field>
        <field name="model">student.fees.register</field>
        <field name="inherit_id" ref="school_fees.view_student_fees_register_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[1]" position="before">
                <page name="student" string="Student">
                    <group name="student_ids">
                        <field name="student_ids" nolabel="1">
                            <tree create="0" edit="0">
                                <field name="name" />
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>

            <xpath expr="//notebook/page[2]" position="attributes">
                <attribute name="attrs">{'invisible': [('state', '!=', 'confirm')]}</attribute>
            </xpath>

            <xpath expr="//sheet/notebook/page[1]" position="attributes">
                    <attribute name="string">Student Invoice</attribute>
            </xpath>

            <xpath expr="//button[@name='fees_register_confirm']" position="attributes">
                    <attribute name="class">oe_highlight</attribute>
            </xpath>

            <xpath expr="//sheet/group[1]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//sheet/group[2]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//sheet/notebook" position="before">
                <group name="information" string="Information">
                    <group name="left_group">
                        <field name="name" placeholder="Name" attrs="{'readonly':[('state','not in','draft')]}"/>
                        <field name="date" attrs="{'readonly':[('state','not in','draft')]}"/>
                        <field name="company_id" placeholder="Company Name" attrs="{'readonly':[('state','not in','draft')]}" options="{&quot;no_create&quot;: True}"/>
                        <field name="branch_id" invisible="1"/>
                    </group>
                    <group name="right_group">
                        <field name="number" readonly="1"/>
                        <field name="journal_id" placeholder="Journal" domain="[('type','=','sale')]" attrs="{'readonly':[('state','not in','draft')]}" options="{&quot;no_create&quot;: True}"/>
                        <field name="academic_year_id"/>
                        <field name="term_id"/>
                    </group>
                </group>

                <group name="fees_register" string="Fees Register For">
                    <group name="left_group">
                        <field name="fees_structure" placeholder="Fee structure" attrs="{'readonly':[('state','not in','draft')]}" options="{&quot;no_create&quot;: True}"/>
                    </group>
                    <group name="right_group">
                        <field name="standard_id" string="Program" placeholder="Select Program" attrs="{'readonly':[('state','not in','draft')]}" required="1" widget="selection"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
