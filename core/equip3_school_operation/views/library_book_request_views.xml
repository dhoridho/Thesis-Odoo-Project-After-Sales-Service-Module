<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_book_library_req_form_inherit" model="ir.ui.view">
        <field name="model">library.book.request</field>
        <field name="inherit_id" ref="library.view_book_library_req_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='card_id']" position="attributes">
                <attribute name="widget"></attribute>
                <attribute name="options">
                    {'no_quick_create': True, 'no_create_edit': True}
                </attribute>
            </xpath>
        </field>
    </record>

</odoo>
