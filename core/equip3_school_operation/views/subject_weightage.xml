<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="subject_weightage_view_tree" model="ir.ui.view">
        <field name="name">subject.weightage.view.tree</field>
        <field name="model">subject.weightage</field>
        <field name="arch" type="xml">
            <tree string="Subject Weightage" create="false">
                <field name="subject_id"/>
                <field name="program_id" string="Intake"/>
                <field name="year_id"/>
                <field name="term_id"/>
            </tree>
        </field>
    </record>

    <record id="subject_weightage_view_form" model="ir.ui.view">
        <field name="name">subject.weightage.view.form</field>
        <field name="model">subject.weightage</field>
        <field name="arch" type="xml">
            <form string="Subject Weightage" create="false">
                <sheet>
                    <button name="print_result" string="Result Final Grade" type="object" class="oe_highlight"/>
                    <div class="oe_button_box" name="button_box">
                        <button name="subject_score_action_form_btn" type="object">
                            <i class="o-hm-icon o-hm-smart-school-scoring" style="font-size:30px;margin-left:4;"/>
                            <span style="margin-top: -16px;margin-left: 8px;">Scoring</span>
                        </button>
                    </div>
                    <group string="Subject Weightage Detail">
                        <group>
                            <field name="subject_id" string="Subject" readonly="1" force_save="1"/>
                            <field name="teacher_id" string="Teacher" domain="[('subject_id', '=', subject_id)]" readonly="1"/>
                            <field name="program_id" string="Intake" readonly="1" force_save="1"/>
                            <field name="group_class" string="Group Class" readonly="1" force_save="1"/>
                            <field name="year_id" readonly="1" force_save="1"/>
                            <field name="term_id" readonly="1" force_save="1"/>
                            <field name="grade_type"/>
                        </group>
                        <group>
                            <field name="total_percentage_exam" widget="percentage" readonly="1" force_save="1"/>
                            <field name="total_percentage_assigment" widget="percentage"/>
                            <field name="total_percentage_additional" widget="percentage"/>
                            <field name="final_percentage" widget="progressbar" readonly="1" force_save="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="intake_page" string="Exam">
                            <field name="exam_ids">
                                <tree create="0" editable="bottom">
                                    <field name="name" readonly="1" force_save="1"/>
                                    <field name="type" readonly="1" force_save="1"/>
                                    <field name="exam_percentage" string="Percentage" widget="percentage"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page name="all_subject_page" string="Assigment">
                            <field name='assignment_ids'>
                                <tree create="0" edit="0" string="Subject">
                                    <field name="name" readonly="1" force_save="1"/>
                                    <field name="type_submission" readonly="1" force_save="1"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Additional">
                            <field name='additional_ids'>
                                <tree create="0" editable="bottom" string="Subject">
                                    <field name="name" readonly="1" force_save="1"/>
                                    <field name="type_submission" readonly="1" force_save="1"/>
                                    <field name="percentage" string="Percentage" widget="percentage"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="subject_weightage_search" model="ir.ui.view">
        <field name="name">subject.weightage.search</field>
        <field name="model">subject.weightage</field>
        <field name="arch" type="xml">
            <search string="Subject Weightage">
                <field name="subject_id"/>
                <field name="program_id" string="Intake"/>
                <field name="year_id"/>
                <field name="term_id"/>
                <filter name="groupby_intake" string="Intake" context="{'group_by': 'program_id'}"/>
                <filter name="groupby_group_class" string="Group Class" context="{'group_by': 'group_class'}"/>
                <filter name="groupby_year" string="Year" context="{'group_by': 'year_id'}"/>
                <filter name="groupby_term" string="Term" context="{'group_by': 'term_id'}"/>
            </search>
        </field>
    </record>

    <record id="subject_weightage_action" model="ir.actions.act_window">
        <field name="name">Subject Weightage</field>
        <field name="res_model">subject.weightage</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('ems_program_id', '=', False), ('program_id', '!=', False)]</field>
        <field name="context">{'search_default_groupby_intake': 1,'search_default_groupby_group_class': 1,'search_default_groupby_year': 1, 'search_default_groupby_term': 1}</field>
    </record>

    <menuitem
        id="subject_weightage_menu"
        name="Subject Weightage"
        action="equip3_school_operation.subject_weightage_action"
        parent="equip3_school_operation.academic_trackings_menu"
        sequence="30"/>
</odoo>