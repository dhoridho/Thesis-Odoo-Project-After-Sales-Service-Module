<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_move_form_inherit" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="partner_bank_id" position="after">
                <field name="student_payslip_id" invisible="1"/>
            </field>
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="attrs">{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))], 'readonly': ['|',('state', '!=', 'draft'),('student_payslip_id', '!=', False)]}</attribute>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Payment Details" name="payment_details">
                    <group>
                        <group>
                            <field name = "payment_details"/>
                            <field name = "amount"/>
                            <field name = "date_of_receipt"/>
                            <field name="proof_of_payment" filename="proof_of_payment_filename"/>
                            <field name="proof_of_payment_filename" invisible="1"/>
                            <field name = "receipt_number"/>
                            <field name = "remarks"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
