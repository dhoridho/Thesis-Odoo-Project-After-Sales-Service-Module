<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
        <xpath expr="//div[hasclass('settings')]" position="inside">
            <div class="row mt16 o_settings_container">
                <div name="student_fees_structure" class="o_setting_right_pane">
                    <label for="payment_instruction" style="margin-left: 88px;"/>
                    <field name="payment_instruction" options="{'no_create_edit': 1, 'no_quick_create': 1}" string="Payment Instruction" />
                </div>
            </div>
        </xpath>
        </field>
    </record>

</odoo>
