<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_student_fees_structure_line_form_inherit" model="ir.ui.view">
        <field name="model">student.fees.structure.line</field>
        <field name="inherit_id" ref="school_fees.view_student_fees_structure_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="replace">
                <form string="Student Payslip Line">
                    <sheet>
                        <group col="4">
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group col="4" string="Calculations">
                            <field name="type"/>
                            <field name="amount"/>
                            <field name="account_id" required="1"/>
                            <field name="fee_tax_id" />
                            <field name="company_id"/>
                            <field name="currency_id"/>
                            <field name="currency_symbol"/>
                        </group>
                        <notebook colspan="4">
                            <page string="Function" attrs="{'readonly':[('type','!=','range')]}">
                                <field name="line_ids" colspan="4" nolabel="1" attrs="{'readonly':[('type','!=','range')]}">
                                    <tree string="Function Arguments" >
                                        <field name="from_month"/>
                                        <field name="to_month"/>
                                    </tree>
                                    <form string="Function Arguments" >
                                        <field name="sequence"/>
                                        <field name="from_month"/>
                                        <field name="to_month"/>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                        <div class="oe_chatter">
                            <field name="message_follower_ids"/>
                            <field name="activity_ids"/>
                            <field name="message_ids"/>
                        </div>
                    </sheet>
                </form>
            </xpath>
        </field>
    </record>

    <record id="view_student_payslip_line_inherit_form" model="ir.ui.view">
        <field name="model">student.payslip.line</field>
        <field name="inherit_id" ref="school_fees.view_student_payslip_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='account_id']" position="after">
                <field name="fee_tax_id" invisible="0"/>
            </xpath>
            <xpath expr="//tree/field[@name='amount']" position="after">
                <field name="price_tax" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="view_student_fees_structure_line_tree" model="ir.ui.view">
        <field name="model">student.fees.structure.line</field>
        <field name="inherit_id" ref="school_fees.view_student_fees_structure_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='account_id']" position="after">
                <field name="fee_tax_id" string="Tax"/>
            </xpath>
            <xpath expr="//field[@name='sequence']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
