<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="view_student_reminder_form_2_inherit" model="ir.ui.view">
            <field name="name">student.reminder.form</field>
            <field name="model">student.reminder</field>
            <field name="inherit_id" ref="school.view_student_reminder_form_2"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="replace">
                    <form string="Student Reminder">
                        <sheet>
                            <separator string="Reminder" />
                            <group>
                                <group>
                                    <field name="stu_id" placeholder="Student" domain="[('state','=','done')]" options="{'no_quick_create': True, 'no_create_edit': True}"/>
                                    <field name="date" placeholder="Select Date" />
                                    <field name="name" placeholder="Reminder Title" required="1"/>
                                </group>
                                <group>
                                    <field name="description" colspan="4" placeholder="Description"/>
                                </group>
                            </group>
                        </sheet>
                    </form>
                </xpath>
            </field>
        </record>
    </data>
</odoo>