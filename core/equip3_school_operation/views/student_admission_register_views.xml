<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="student_admission_register_form_view" model="ir.ui.view">
            <field name="name">student.admission.register.form.</field>
            <field name="model">student.admission.register</field>
            <field name="arch" type="xml">
                <form string="Admission Register">
                    <header>
                        <button name="student_admission_done" string="Done" type="object" class="oe_highlight" attrs = "{'invisible' : ['|', ('is_approve_button', '=', False), ('state', '!=', 'confirmed')]}" confirm="Are you sure you want to done this admission register? The student invoice is still pending."/>
                        <button name="action_apply" string="Apply" type="object" class="oe_highlight" attrs = "{'invisible' : [('state', '!=', 'draft')]}"/>
                        <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" attrs = "{'invisible' : ['|', ('is_approve_button', '=', False), ('state', '!=', 'applied')]}"/>     
                        <button name="action_reject" string="Reject" type="object" class="oe_highlight" attrs = "{'invisible' : ['|', ('is_approve_button', '=', False), ('state', 'not in', ('applied', 'confirmed'))]}"/>
                        <button name="action_set_to_draft" string="Set to Draft" type="object" class="oe_highlight" invisible="1"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,cancel"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="button_admission_invoice" type="object" attrs="{'invisible': [('state', 'not in', ['confirmed', 'done'])]}">
                                <i class="o-hm-icon o-hm-smart-school-invoices" style="font-size: 30px; margin-left: 12px;"/>
                                <span style="margin-top: -16px; margin-left: 8px;">Student Invoice</span>
                            </button>
                        </div>
                        <div class="oe_inline">
                            <group name="personal_information" string="Personal Information" col="6">
                                <field name="photo" widget="image" class="oe_left" nolabel="1" />
                                <div class="oe_title" colspan="2">
                                    <br/>
                                    <group name="existing_student_group" attrs="{'invisible':[('student_type','!=','existing_student')]}">
                                        <field name="student_type" attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="type" attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="student_id" string="Student" attrs="{'readonly':[('state','!=', 'draft')], 'invisible':[('student_type','!=','existing_student')], 'required':[('student_type','=','existing_student')]}" domain="[('state', '=', 'done'),('student_type', '=', 'new_student')]"/>
                                        <div style="height: 17px;"></div>
                                        <field name="user_id" nolabel="1" placeholder="Related Student" invisible="1" />
                                    </group>
                                    <group name="new_student_group" attrs="{'invisible':[('student_type','!=','new_student')]}">
                                        <field name="student_type" attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="type" attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <div style="height: 100px;"></div>
                                        <field name="user_id" nolabel="1" placeholder="Related Student" invisible="1" />
                                    </group>
                                </div>
                                <div class="oe_title" colspan="3">
                                    <group>
                                        <field name="full_name" nolabel="1" class="oe_read_only"/>
                                        <div></div>
                                        <field name="name" placeholder="First Name" string="Student Name" required="1" attrs="{'readonly':[('state','!=','draft')]}" class="oe_edit_only"/>
                                        <div></div>
                                        <field name="middle" placeholder="Middle Name" nolabel="1" attrs="{'readonly':[('state','!=','draft')]}" class="oe_edit_only"/>
                                        <div></div>
                                        <field name="last" placeholder="Last Name" nolabel="1" attrs="{'readonly':[('state','!=','draft')]}" class="oe_edit_only"/>
                                        <div></div>
                                        <field name="active" invisible="1"/>
                                    </group>
                                </div>
                                <field name="pid" nolabel="1" readonly="1"/>
                            </group>
                        </div>
                        <group name="school_and_address_group">
                            <group name="school_infomation" string="School and Program Information">
                                <field name="company_id" readonly="1"/>
                                <field name="school_id" placeholder="School Name" required="1" attrs="{'readonly':[('state','!=','draft')]}" options="{&quot;no_create&quot;: True}" />
                                <field name="branch_id" readonly="1"/>
                                <field name="year" placeholder="Academic Year" readonly="1" required="1" attrs="{'readonly':[('state','!=','draft')]}" options="{&quot;no_create&quot;: True}" />
                                <field name="program_id" domain="[('id', 'in', program_ids)]" attrs="{'readonly':[('state','!=','draft')]}" />
                                <field name="medium_id" placeholder="Medium" widget="selection" required="1" invisible="1" attrs="{'readonly':[('state','!=','draft')]}" />
                                <field name="standard_id" string='Intake' placeholder="Intake" domain="[('school_id','=',school_id),('medium_id','=',medium_id)]" options="{&quot;no_create&quot;: True}" attrs="{'readonly':[('state','!=','draft')]}" required="1" />
                                <field name="fees_ids" required="1" widget="section_and_note_many2one" readonly="1" force_save="1" attrs="{'readonly':[('state','!=','draft')]}" />
                                <field name="approved_matrix_id" required="True"/>
                                <field name="academic_tracking_ids" invisible="1"/>
                            </group>
                            <group name="other_information" string="Other Information">
                                <label for="street" string="Address" />
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street" required="1" attrs="{'readonly':[('state','!=','draft')]}" />
                                    <field name="street2" placeholder="Street 2..." class="o_address_street" attrs="{'readonly':[('state','!=','draft')]}" />
                                    <field name="country_id" placeholder="Country" class="o_address_country" required="1" options="{&quot;no_open&quot;: True}" attrs="{'readonly':[('state','!=','draft')]}" />
                                    <field name="city" placeholder="City" class="o_address_city" attrs="{'readonly':[('state','!=','draft')]}" />
                                    <field name="state_id" class="o_address_state" placeholder="State" attrs="{'readonly':[('state','!=','draft')]}" />
                                    <field name="zip" placeholder="ZIP" class="o_address_zip" attrs="{'readonly':[('state','!=','draft')]}" />
                                </div>
                                <field name="medium_id" placeholder="Medium" widget="selection" required="1" invisible="1" attrs="{'readonly':[('state','!=','draft')]}" />
                                <field name="division_id" placeholder="Division" widget="selection" attrs="{'readonly':[('state','!=','draft')]}" invisible="1"/>
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page name="general" string="General">
                                <form string="General">
                                    <sheet>
                                        <group name="general_information" string="General Information">
                                            <group name="general_left">
                                                <field name="name_presented" attrs="{'readonly':[('state','!=','draft')]}" />
                                                <field name="nric" attrs="{'readonly':[('state','!=','draft')]}" />
                                                <field name="gender" placeholder="Gender" attrs="{'readonly':[('state','!=','draft')]}" required="1" />
                                                <field name="date_of_birth" placeholder="Birthdate" attrs="{'readonly':[('state','!=','draft')]}"/>
                                                <field name="age" />
                                            </group>
                                            <group name="general_right">
                                                <field name="phone" placeholder="Phone Number" attrs="{'readonly':[('state','!=','draft')]}" />
                                                <field name="mobile" placeholder="Mobile Number" attrs="{'readonly':[('state','!=','draft')]}" />
                                                <field name="email" required="1" placeholder="Email Address" String="Email" attrs="{'readonly':[('state','!=','draft')]}" />
                                                <field name="website" widget="url" placeholder="e.g. www.serpentcs.com" attrs="{'readonly':[('state','!=','draft')]}" />
                                                <field name="is_pdpa_constent" invisible="1"/>
                                                <field name="is_approve_button" invisible="1"/>
                                                <field name="approval_matrix_line_id" invisible="1"/>
                                                <field name="program_ids" invisible="1"/>
                                                <field name="mother_tongue" widget="selection" placeholder="Mother Tongue" attrs="{'readonly':[('state','!=','draft')]}"/>
                                                <field name="admission_date" placeholder="Admission Date" attrs="{'readonly':[('state','!=','draft')]}" readonly="1"/>
                                                <field name="maritual_status" placeholder="Select Maritual Status" attrs="{'readonly':[('state','!=','draft')]}"/>
                                            </group>
                                        </group>
                                    </sheet>
                                </form>
                            </page>
                            <page string="Pass Tracker" name="pass_tracker_tab" attrs="{'invisible':[('type','!=','international_student')]}">
                                <form string="Pass Tracker">
                                    <sheet>
                                        <group name="pass_tracker_group">
                                            <group id="header_left_group">
                                                <field name="personal_document" />
                                                <field name="transfer_student"/>
                                                <field name="previous_school" attrs="{'invisible':[('transfer_student','!=','yes')]}"/>
                                                <field name="student_pass_registry"/>
                                                <field name="student_pass_status"/>
                                                <field name="student_pass_digital" />
                                            </group>
                                            <group id="header_right_group">
                                                <field name="appeal_from"/>
                                                <field name="med_checkup_form" />
                                                <field name="med_checkup_result"/>
                                                <field name="med_checkup_date"/>
                                            </group>
                                        </group>
                                    </sheet>
                                </form>
                            </page>
                            <page name="parent_information" string="Parents">
                                <field name="parent_id" attrs="{'readonly':[('state','!=','draft')]}"
                                    context="{'form_view_ref':'school.view_parent_form','default_parent_school':1}"
                                    options="{&quot;no_open&quot;: True}"/>
                            </page>
                            <page name="references" string="References">
                                <field name="reference_ids" nolabel="1" colspan="4" attrs="{'readonly':[('state','!=','draft')]}">
                                    <tree string="Reference" editable="top">
                                        <field name="name" placeholder="Firstname"/>
                                        <field name="middle" placeholder="Middlename"/>
                                        <field name="last" placeholder="Surname"/>
                                        <field name="designation" placeholder="Designation"/>
                                        <field name="email"/>
                                        <field name="phone" placeholder="Phone"/>
                                        <field name="gender" placeholder="Gender"/>
                                    </tree>
                                    <form string="Reference">
                                        <group name="refference_form" col="4" colspan="4">
                                            <field name="name" placeholder="First Name" required="True"/>
                                            <field name="middle" placeholder="Middle Name" />
                                            <field name="last" placeholder="Last Name" />
                                            <field name="designation" placeholder="Designation" />
                                            <field name="phone" placeholder="Phone Number" />
                                            <field name="gender" placeholder="Gender"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page name="family_details" string="Family Details">
                                <field name="family_con_ids" nolabel="1" colspan="4" attrs="{'readonly':[('state','!=','draft')]}">
                                    <tree string="Family  Contact Details">
                                        <field name="relative_name"/>
                                        <field name="relation" />
                                        <field name="phone" />
                                    </tree>
                                    <form string="Family Contact Details">
                                        <group name="family_detail_main">
                                            <group name="family_detail_left">
                                                <field name="rel_name" placeholder="Name" />
                                                <field name="stu_name" placeholder="Create or Select Name" attrs="{'invisible':[('rel_name','!=','exist')]}" options="{&quot;no_create&quot;: True}"/>
                                                <field name="name" placeholder="Name" attrs="{'invisible':[('rel_name','!=','new')]}"/>
                                                <field name="relation" placeholder="Enter or select Relation" />
                                                <field name="relative_name" invisible="1"/>
                                            </group>
                                            <group name="family_detail_right">
                                                <field name="phone" placeholder="Phone Number" />
                                                <field name="email" placeholder="Email Address" />
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page name="remarks" string="Remarks">
                                <form string="Remarks">
                                    <field name="remark" placeholder="Remark" nolabel="1" colspan="4" attrs="{'readonly':[('state','!=','draft')]}"/>
                                </form>
                            </page>
                            <page name="emergency_contacts" string="Emergency Contact">
                                <group name="emergency_contact_main">
                                    <separator string="Emergency Contact Details" colspan="4"/>
                                    <group nmae="contact_information" colspan="4" col="4">
                                        <field name="contact_phone" attrs="{'readonly':[('state','!=','draft')]}" placeholder="Phone Number"/>
                                        <field name="contact_mobile" attrs="{'readonly':[('state','!=','draft')]}" placeholder="Mobile Number"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Approval Matrix Line" name="approved_matrix_ids">
                                <field name="approved_matrix_ids" context="{'approved_matrix_ids': approved_matrix_ids}">
                                    <tree editable="bottom">
                                        <field name="state"/>
                                        <field name="user_id" widget="many2many_tags"/>
                                        <field name="minimum_approver"/>
                                        <field name="approved_status"/>
                                        <field name="approval_time"/>
                                    </tree>
                                  </field>
                            </page>
                        </notebook>
                        <div class="oe_chatter">
                            <field name="message_follower_ids"/>
                            <field name="activity_ids"/>
                            <field name="message_ids"/>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="student_admission_register_tree_view" model="ir.ui.view">
            <field name="name">student.admission.register.tree.2</field>
            <field name="model">student.admission.register</field>
            <field name="arch" type="xml">
                <tree string="Admission Register">
                    <field name="pid" />
                    <field name="name" />
                    <field name="student_name" invisible="1" />
                    <field name="year" widget="selection" />
                    <field name="standard_id" widget="selection" />
                    <field name="school_id" />
                    <field name="admission_date" />
                    <field name="gender" />
                    <field
                        name="state" 
                        widget="badge" 
                        decoration-info="state=='draft'" 
                        decoration-muted="state=='cancel'" 
                        decoration-success="state in ('applied', 'confirmed', 'done')" 
                        decoration-danger="state=='rejected'" />
                    <field 
                        name="admission_invoice_state" 
                        widget="badge" decoration-success="admission_invoice_state=='paid'" 
                        decoration-danger="admission_invoice_state=='pending'"/>
                </tree>
            </field>
        </record>

        <record id="student_admission_register_search_view" model="ir.ui.view">
            <field name="name">student.admission.register</field>
            <field name="model">student.admission.register</field>
            <field name="arch" type="xml">
                <search string="Admission Register">
                    <filter string="Draft" name="state_student" domain="[('state','=', 'draft')]" help="Admission In Draft State" />
                    <separator orientation="vertical" />
                    <field name="name" />
                    <field name="student_name" invisible="1" />
                    <field name="year" invisible="1" />
                    <field name="standard_id" />
                    <field name="gender" />
                    <field name="school_id" />
                    <newline />
                    <group expand="0" string="Group By..." colspan="12" col="10">
                        <filter name="class" string="Class" domain="[]" help="By Class" context="{'group_by':'standard_id'}" />
                        <filter name="gender" string="Gender" domain="[]" help="By Gender" context="{'group_by':'gender'}" />
                        <filter name="name" string="Name" domain="[]" help="By Class" context="{'group_by':'student_name'}" />
                        <filter name="school" string="School" help="By School" context="{'group_by':'school_id'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="action_student_admission_register" model="ir.actions.act_window">
            <field name="name">Admission Register</field>
            <field name="res_model">student.admission.register</field>
            <field name="domain"></field>
            <field name="view_id" ref="student_admission_register_tree_view" />
            <field name="search_view_id" ref="student_admission_register_search_view" />
            <field name="view_mode">tree,form,kanban</field>
        </record>

        <menuitem
            id="menu_admission_form"
            name="Admission Register"
            parent="school.admission_register"
            action="action_student_admission_register"
            sequence="21"
            groups="school.group_school_administration,school.group_is_admission"/>
    
    </data>
    

</odoo>
