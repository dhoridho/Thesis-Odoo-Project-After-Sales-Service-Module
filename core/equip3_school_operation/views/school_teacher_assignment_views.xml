<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_exam_exam_form_inherit" model="ir.ui.view">
        <field name="name">exam.exam.form.inherit</field>
        <field name="model">exam.exam</field>
        <field name="inherit_id" ref="exam.view_exam_exam_form"/>
        <field name="arch" type="xml">

            <field name="start_date" position="after">
                <field name="term_id"/>
            </field>
            <field name="end_date" position="before">
                <field name="type"/>
            </field>
            <field name="end_date" position="after">
                <field name="exam_attachment" attrs="{'invisible': [('type', 'not in', ['softcopy', 'hardcopy'])]}"/>
                <field name="question_id" attrs="{'invisible': [('type', '!=', 'online')]}"/> 
                <field name="exam_url" invisible="1"/>
            </field>
            <xpath expr="//sheet/div/button[@name='generate_result']" position="before">
                <button name="action_show_survey" type="object" class="btn oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible': [('question_id', '=', False)]}">
                    <field string="Answers" name="exam_count" widget="statinfo"/>
                </button>
            </xpath>
            <xpath expr="//div[hasclass('oe_button_box')]" position="after">
                <br/>
                <br/>
            </xpath>
            <xpath expr="//notebook/page[1]" position="attributes">
                <attribute name="string">Program</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='standard_id']" position="attributes">
                <attribute name="string">Intake</attribute>
            </xpath>
            <xpath expr="//sheet/group[2]" position="after">
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </xpath>
            <xpath expr="//sheet/group[3]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
