<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="student_leave_approval_matrix_form_view" model="ir.ui.view">
        <field name="name">student.leave.approval.matrix.form</field>
        <field name="model">school.approval.matrix</field>
        <field name="arch" type="xml">
            <form string="Student Leave Approval Matrix">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="school_id" required="1" options="{'no_create': True, 'no_open': True}"/>
                        </group>
                        <group>
                            <!-- <field name="program_ids" invisible="1"/> -->
                            <field name="program_id" required="1"/>
                            <field name="branch_id" invisible="1"/>
                            <field name="approval_for" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="approval_matrix_line" string="Approval">
                            <field name="approval_matrix_ids" context="{'approval_matrix_ids': approval_matrix_ids}">
                                <tree editable="bottom">
                                    <field name="sequence" required="1"/>
                                    <field name="user_id" widget="many2many_tags" required="1"/>
                                    <field name="minimum_approver" string="Minimum Approvers" required="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="student_leave_approval_matrix_tree_view" model="ir.ui.view">
        <field name="name">student.approval.approval.matrix.tree</field>
        <field name="model">school.approval.matrix</field>
        <field name="arch" type="xml">
            <tree string="Student Leave Approval Matrix">
                <field name="name"/>
                <field name="school_id"/>
                <field name="branch_id" invisible="1"/>
                <field name="program_id"/>
                <field name="approval_for" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="student_leave_approval_matrix_act_window" model="ir.actions.act_window">
        <field name="name">Student Leave Approval Matrix</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.approval.matrix</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('approval_for', '=', 'student_leave')]</field>
        <field name="context">{'default_approval_for': 'student_leave'}</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('student_leave_approval_matrix_tree_view')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('student_leave_approval_matrix_form_view')}),
        ]"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Student Leave Approval Matrix.
            </p>
        </field>
    </record>

    <menuitem
        id="menu_student_approval_matrix_sub_form"
        name="Student Leave Approval Matrix"
        parent="menu_approval_matrix_form"
        action="student_leave_approval_matrix_act_window" 
        sequence="10"
        groups="group_student_leave_request_menu"/>

</odoo>
