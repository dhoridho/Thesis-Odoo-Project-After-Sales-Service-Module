<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="view_monthly_attendance_form" model="ir.ui.view">
        <field name="name">monthly.attendance.form</field>
        <field name="model">monthly.attendance</field>
        <field name="arch" type="xml">
            <form string="Monthly Attendance Sheet">
                <sheet>
                    <separator string="Monthly Attendance Sheet" col="2" colspan="2"/>
                    <group>
                        <group>
                            <field name="school_id" string="School" required='1'/>
                            <field name="program_id" string="Program" required='1'/>
                            <field name="intake_id" string="Intake" required='1'/>
                        </group>
                        <group>
                            <field name="year_id" string="Academic Year" required='1'/>
                            <field name="month_id" string="Term" required='1'/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_monthly_attendance" model="ir.actions.act_window">
        <field name="name">Monthly Attendance Sheet</field>
        <field name="res_model">monthly.attendance</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_monthly_attendance_form"/>
        <field name="target">new</field>
        <field name="help">
            Display the Monthly Attendance Sheet.
        </field>
    </record>

    <record id="school_attendance.menu_monthly_attendance_sheet_sub_form" model="ir.ui.menu" >
        <field name="active" eval="False"/>
    </record>

    <record id="school_attendance.menu_attendance" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-sub-school-monthly-attendance-sheet</field>
    </record>

    <!-- <menuitem id="menu_monthly_attendance_sheet_form" parent="school_attendance.menu_attendance"
              action="action_monthly_attendance" groups="school.group_school_administration,school.group_school_teacher" sequence="54"/> -->

    </data>
</odoo>