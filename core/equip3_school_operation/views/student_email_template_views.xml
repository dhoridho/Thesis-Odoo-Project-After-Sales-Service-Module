<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="student_confirmation_email_template" model="mail.template">
            <field name="name">Student Confirmation Email</field>
            <field name="email_from">${object.email_from | safe}</field>
            <field name="email_to">${object.email | safe}</field>
            <field name="subject">Confirmation ${object.name}</field>
            <field name="model_id" ref="school.model_student_student"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html"><![CDATA[
            <div>
                <p>Dear Mr./Ms. ${object.student_name}</p>

                <p>Congratulations! We are pleased to inform you that you have been accepted as a new student at the ${object.school_id.name}</p>
                <p>The following apply: </p> 

                <p>Name of Student : ${object.student_name}</p>
                <p>Age : ${object.age}</p>
                <p>Gender : ${object.gender}</p>
                <p>Academic Year : ${object.Acadamic_year}</p>
                <p>Intake : ${object.standard_id.name}</p>

                <p>If you have any questions, please contact us through our phone or email listed below.</p>
                
                <p>Best Regards,</p>
                <p>Administrator</p>
            </div>
            ]]></field>
        </record>

        <record id="student_admission_confirmation_email_template" model="mail.template">
            <field name="name">Student Admission Confirmation Email</field>
            <field name="email_from">${object.email_from | safe}</field>
            <field name="email_to">${object.email | safe}</field>
            <field name="subject">Confirmation ${object.name}</field>
            <field name="model_id" ref="equip3_school_operation.model_student_admission_register"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html"><![CDATA[
            <div>
                <p>Dear Mr./Ms. ${object.student_name}</p>

                <p>Congratulations! We are pleased to inform you that you have been accepted as a new student at the ${object.school_id.name}</p>
                <p>The following apply: </p> 

                <p>Name of Student : ${object.student_name}</p>
                <p>Age : ${object.age}</p>
                <p>Gender : ${object.gender}</p>
                <p>Academic Year : ${object.Acadamic_year}</p>
                <p>Intake : ${object.standard_id.name}</p>

                <p>If you have any questions, please contact us through our phone or email listed below.</p>
                
                <p>Best Regards,</p>
                <p>Administrator</p>
            </div>
            ]]></field>
        </record>

        <record id="academic_transcript_email_template" model="mail.template">
            <field name="name">Academic Transcript Email</field>
            <field name="email_from">${object.email_from | safe}</field>
            <field name="email_to">${object.student.student_id.email | safe}</field>
            <field name="subject">Academic Transcript</field>
            <field name="model_id" ref="equip3_school_operation.model_academic_tracking_transcript"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html"><![CDATA[
            <div>
                <p>Dear ${object.student.student_id.name}</p>

                <p>Please find your academic transcript attached.</p>
                <p>If you have any questions, feel free to reach out.</p> 

                <p>Thank you</p>
            </div>
            ]]></field>
        </record>
    </data>
</odoo>
