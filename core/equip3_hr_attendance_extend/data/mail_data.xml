<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!--Email template for submit request -->
        <record id="email_template_working_schedule_exchange_approval" model="mail.template">
            <field name="name">Application for Working Schedule Exchange approval</field>
            <field name="email_from">${ctx['email_from']|safe}</field>
            <field name="subject">Application for Working Schedule Exchange approval</field>
            <field name="email_to">${ctx['email_to']|safe}</field>
            <field name="model_id" ref="equip3_hr_attendance_extend.model_schedule_exchange"/>
            <field name="body_html"><![CDATA[
<p>Dear ${ctx['approver_name']|safe},
<p>
</br>
Based on the working schedule exchange request,  ${object.display_name or 'n/a' }.
<p>
You have approval pending that need your decision to approve or reject this working schedule exchange request from ${ctx['emp_name']|safe}.</br>
${ctx['emp_name']|safe} has requested working schedule exchange for ${ctx['date_from']|safe} to ${ctx['date_to']|safe},
</br>


<div class="row">
    <div class="col-md-6">
        <p>Current Schedule</p>
        <table border="0" cellspacing="0" cellpadding="0"
           style="width:50%;float:left";border-collapse:collapse;background:inherit;color:inherit;border:1px solid black;">
        <thead style="border:1px solid black;">
            <th class="text-center" style="padding:20%px;border:1px solid black;">Employee</th>
            <th class="text-center" style="border:1px solid black;">Start Date</th>
            <th class="text-center" style="border:1px solid black;">End Date</th>
        </thead>
        <tbody style="border:1px solid black;">
            % for line in object.schedule_calendar_ids:
            <tr style="padding:20%px;border:1px solid black;">
                <td style="border:1px solid black;text-align:center;">${line.employee_id.name}</td>
                <td style="border:1px solid black;text-align:center;">${line.checkin}</td>
                <td style="border:1px solid black;text-align:center;">${line.checkout}</td>
            </tr>
            % endfor
        </tbody>
        </table>
    </div>
    <div class="col-md-6">
        <p>Exchange Schedule</p>
        <table border="0" cellpadding="0" cellspacing="0"
           style="width:50%;float:left";border-collapse:collapse;background:inherit;color:inherit;border:1px solid black;">
        <thead style="border:1px solid black;">
            <th class="text-center" style="padding:20%px;border:1px solid black;">Employee</th>
            <th class="text-center" style="padding:20%px;border:1px solid black;">Start Date</th>
            <th class="text-center" style="padding:20%px;border:1px solid black;">End Date</th>
        </thead>
        <tbody style="border:1px solid black;">
            % for line in object.exchange_schedule_ids:
            <tr style="border:1px solid black;">
                <td style="padding:20%px;border:1px solid black;text-align:center;">${line.employee_id.name}</td>
                <td style="padding:20%px;border:1px solid black;text-align:center;">${line.checkin}</td>
                <td style="padding:20%px;border:1px solid black;text-align:center;">${line.checkout}</td>
            </tr>
            % endfor
        </tbody>
        </table>
    </div>
</div>

<p>
you can approve or reject the working schedule exchange request by clicking on this button :
</p>
</br>
<p>
<a href="${ctx['url']|safe}" style="padding: 8px 12px; font-size: 12px; color: #FFFFFF; text-decoration: none !important; font-weight: 400; background-color: #875A7B; border: 0px solid #875A7B; border-radius:3px">View Form</a>
</p>
</br>
<p>
Thank you
</p>
]]></field>
        </record>
        <!--Email template for Approved -->
        <record id="email_template_working_schedule_exchange_approved" model="mail.template">
            <field name="name">Approval Of working schedule exchange Approved</field>
            <field name="email_from">${ctx['email_from']|safe}</field>
            <field name="subject">Approval Of working schedule exchange Request</field>
            <field name="email_to">${ctx['email_to']|safe}</field>
            <field name="model_id" ref="equip3_hr_attendance_extend.model_schedule_exchange"/>
            <field name="body_html"><![CDATA[
        <p>Dear ${ctx['emp_name']|safe},
        <p>
        </br>
        We have received your request for a working schedule exchange period ${ctx['date_from']|safe} to ${ctx['date_to']|safe}.

        This notification serves as confirmation that your working schedule exchange request has been approved.
        </br>
        Thank you
        ]]></field>
        </record>
        <!--Email template for Reject -->
        <record id="email_template_working_schedule_exchange_reject" model="mail.template">
            <field name="name">Rejection Of working schedule exchange</field>
            <field name="email_from">${ctx['email_from']|safe}</field>
            <field name="subject">Rejection Of working schedule exchange Request</field>
            <field name="email_to">${ctx['email_to']|safe}</field>
            <field name="model_id" ref="equip3_hr_attendance_extend.model_schedule_exchange"/>
            <field name="body_html"><![CDATA[
        <p>Dear ${ctx['emp_name']|safe},
        <p>
        </br>
        We have received your request for a working schedule exchange period ${ctx['date_from']|safe} to ${ctx['date_to']|safe}.

        This notification serves as confirmation that your working schedule exchange request has been Rejected.
        </br>
        Thank you
        ]]></field>
        </record>

