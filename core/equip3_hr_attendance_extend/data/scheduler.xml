<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ir_cron_update_attendance_status" model="ir.cron">
            <field name="name">Update Attendance Status</field>
            <field name="model_id" ref="model_hr_attendance"/>
            <field name="state">code</field>
            <field name="code">model._cron_update_attendance_status()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="True" name="doall"/>
            <field eval="True" name="active"/>
            <field name="nextcall" eval="(DateTime.now() + relativedelta(days=0)).strftime('%Y-%m-%d 17:30:00')"/>
        </record>
        <record id="ir_cron_update_employee_calendar" model="ir.cron">
            <field name="name">Updated Employee Working Calendar</field>
            <field name="model_id" ref="model_hr_attendance"/>
            <field name="state">code</field>
            <field name="code">model._cron_update_employee_calendar()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now() + relativedelta(days=0)).strftime('%Y-%m-%d 18:00:00')"/>
        </record>
        <!-- Scheduler for Auto Follow Up Approver-->
        <record forcecreate="True" id="ir_cron_attendance_auto_follow_up_approver" model="ir.cron">
            <field name="name">Auto Follow Up Attendance Approver</field>
            <field name="model_id" ref="model_hr_attendance_change"/>
            <field name="state">code</field>
            <field name="code">model.get_auto_follow_up_approver()</field>
            <field eval="False" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall" />
        </record>
        <!-- Scheduler for Auto Follow Up Approver-->
        <record forcecreate="True" id="ir_cron_working_auto_follow_up_approver" model="ir.cron">
            <field name="name">Auto Follow Up Working Approver</field>
            <field name="model_id" ref="model_schedule_exchange"/>
            <field name="state">code</field>
            <field name="code">model.get_auto_follow_up_approver()</field>
            <field eval="False" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall" />
        </record>
        <record id="ir_cron_set_attandance_id_employee" model="ir.cron">
            <field name="name">Set Attendance ID on Employee</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="state">code</field>
            <field name="code">model.generate_attendace_id_pin()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="priority">5</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now() + relativedelta(days=1)).strftime('%Y-%m-%d 18:00:00')"/>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root" />
        </record>
    </data>
</odoo>
