<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_attendance_change_analysis_view_pivot" model="ir.ui.view">
        <field name="name">hr.attendance.change.analysis.pivot</field>
        <field name="model">hr.attendance.change.analysis</field>
        <field name="arch" type="xml">
            <pivot string="Attendance Change Analysis" disable_linking="1">
                <field name="employee_id" type="row"/>
                <field name="date" type="col"/>
                <field name="request_count" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="hr_attendance_change_analysis_view_graph" model="ir.ui.view">
        <field name="name">hr.attendance.change.analysis.graph</field>
        <field name="model">hr.attendance.change.analysis</field>
        <field name="arch" type="xml">
            <graph string="Attendance Change Analysis" disable_linking="1">
                <field name="employee_id"/>
                <field name="date"/>
                <field name="request_count" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="hr_attendance_change_analysis_action" model="ir.actions.act_window">
        <field name="name">Attendance Change Analysis</field>
        <field name="res_model">hr.attendance.change.analysis</field>
        <field name="view_mode">graph,pivot</field>
        <field name="view_id"></field>  <!-- force empty -->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No data yet!
            </p>
        </field>
    </record>

    <menuitem id="menu_hr_attendance_change_analysis" name="Attendance Change Analysis" parent="hr_attendance.menu_hr_attendance_root" sequence="31" groups="hr_attendance.group_hr_attendance_user" action="hr_attendance_change_analysis_action"/>
</odoo>