<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>

        <record id="view_hr_roster_calendar_attachment" model="ir.ui.view">
            <field name="name">hr.roster.calendar.excel</field>
            <field name="model">hr.roster.calendar.excel</field>
            <field name="arch" type="xml">
                <form string="Roster Calendar">
                    <group>
                        <field name="excel_file" readonly="1" filename="file_name"/>
                        <field name="file_name" invisible="1"/>
                    </group>
                    <footer>
                        <button special="cancel" string="Close" class="oe_highlight" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_hr_roster_calendar_attachment" model="ir.actions.act_window">
            <field name="name">Roster Calendar Attachment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.roster.calendar.excel</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref='view_hr_roster_calendar_attachment'/>
            <field name="target">new</field>
        </record>

        <record id="view_hr_roster_calendar_form" model="ir.ui.view">
            <field name="name">hr.roster.calendar.form</field>
            <field name="model">hr.roster.calendar</field>
            <field name="arch" type="xml">
                <form string="Roster Calendar">
                    <group>
                        <label for="start_date" string="Working Date"/>
                        <div>
                            <field name="start_date" class="oe_inline"/> -
                            <field name="end_date" class="oe_inline"/>
                        </div>
                        <field name="work_location_ids" widget="many2many_tags" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                        <field name="all_department"/>
                        <field name="department_ids" widget="many2many_tags" attrs="{'required': [('all_department','=',False)],'invisible': [('all_department','=',True)]}" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                    </group>
                    <footer>
                        <button name="action_print_xls" string="Print" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_hr_roster_calendar" model="ir.actions.act_window">
            <field name="name">Roster Calendar</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.roster.calendar</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem name="Roster Calendar" id="hr_roster_calendar_menu"
                  parent="hr_attendance.menu_hr_attendance_report"
                  action="action_view_hr_roster_calendar"
                  groups="hr_attendance.group_hr_attendance_user"
                  sequence="40"
                  />

    </data>
</odoo>
