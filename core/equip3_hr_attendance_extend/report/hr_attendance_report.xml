<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>

        <record id="view_hr_attendance_report_attachment" model="ir.ui.view">
            <field name="name">hr.attendance.report.excel</field>
            <field name="model">hr.attendance.report.excel</field>
            <field name="arch" type="xml">
                <form string="Attendance Report">
                    <group>
                        <field name="excel_file" readonly="1" filename="file_name"/>
                        <field name="file_name" invisible="1"/>
                    </group>
                    <footer>
                        <button special="cancel" string="Close" class="oe_highlight" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_hr_attendance_report_attachment" model="ir.actions.act_window">
            <field name="name">Attendance Report Attachment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.attendance.report.excel</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref='view_hr_attendance_report_attachment'/>
            <field name="target">new</field>
        </record>

        <record id="view_hr_attendance_report_form" model="ir.ui.view">
            <field name="name">hr.attendance.report.form</field>
            <field name="model">hr.attendance.report</field>
            <field name="arch" type="xml">
                <form string="Attendance Report">
                    <group>
                        <label for="start_date" string="Period"/>
                        <div>
                            <field name="start_date" class="oe_inline"/> -
                            <field name="end_date" class="oe_inline"/>
                        </div>
                        <field name="work_location_ids" widget="many2many_tags" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                        <field name="specify_by"/>
                        <field name="all_department" attrs="{'invisible': [('specify_by','!=','department')]}"/>
                        <field name="department_ids" widget="many2many_tags" attrs="{'required': [('specify_by','=','department'),('all_department','=',False)],'invisible': ['|',('specify_by','!=','department'),('all_department','=',True)]}" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                        <field name="all_job_position" attrs="{'invisible': [('specify_by','!=','job_position')]}"/>
                        <field name="job_position_ids" widget="many2many_tags" attrs="{'required': [('specify_by','=','job_position'),('all_job_position','=',False)],'invisible': ['|',('specify_by','!=','job_position'),('all_job_position','=',True)]}" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                        <field name="all_employee" attrs="{'invisible': [('specify_by','!=','employee')]}"/>
                        <field name="employee_ids" widget="many2many_tags" attrs="{'required': [('specify_by','=','employee'),('all_employee','=',False)],'invisible': ['|',('specify_by','!=','employee'),('all_employee','=',True)]}" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                        <field name="all_tag" attrs="{'invisible': [('specify_by','!=','tag')]}"/>
                        <field name="tag_ids" widget="many2many_tags" attrs="{'required': [('specify_by','=','tag'),('all_tag','=',False)],'invisible': ['|',('specify_by','!=','tag'),('all_tag','=',True)]}" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                    </group>
                    <footer>
                        <button name="action_print_xls" string="Print" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_hr_attendance_report" model="ir.actions.act_window">
            <field name="name">Attendance Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.attendance.report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem name="Attendance Report" id="hr_attendance_report_menu"
                  parent="hr_attendance.menu_hr_attendance_report"
                  action="action_view_hr_attendance_report"
                  groups="hr_attendance.group_hr_attendance_manager,equip3_hr_employee_access_right_setting.group_hr_attendance_hr_manager"
                  sequence="39"
                  />

    </data>
</odoo>
