<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_attendance_offline_approval_matrix_tree" model="ir.ui.view">
        <field name="name">hr.attendance.offline.approval.matrix.tree</field>
        <field name="model">hr.attendance.offline.approval.matrix</field>
        <field name="arch" type="xml">
            <tree string="Attendance Offline Approval Matrix">
                <field name="name"/>
                <field name="level"/>
                <field name="create_uid"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="hr_attendance_offline_approval_matrix_form" model="ir.ui.view">
        <field name="name">hr.attendance.offline.approval.matrix.form</field>
        <field name="model">hr.attendance.offline.approval.matrix</field>
        <field name="arch" type="xml">
            <form string="Attendance Offline Approval Matrix">
                <sheet>
                    <div class="oe_title" name="title">
                        <h2>
                            <field name="name" nolabel="1" readonly="1"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="apply_to" required="1"/>
                            <field name="employee_ids" widget="many2many_tags"
                                   attrs="{'invisible': [('apply_to', '!=', 'by_employee')],'required': [('apply_to', '=', 'by_employee')]}" options="{'no_open':True,'no_create': True}"/>
                            <field name="department_ids" widget="many2many_tags"
                                   attrs="{'invisible': [('apply_to', '!=', 'by_department')],'required': [('apply_to', '=', 'by_department')]}" options="{'no_open':True,'no_create': True}"/>
                            <field name="job_ids" widget="many2many_tags"
                                   attrs="{'invisible': [('apply_to', '!=', 'by_job_position')],'required': [('apply_to', '=', 'by_job_position')]}" options="{'no_open':True,'no_create': True}"/>
                        </group>
                        <group>
                            <field name="company_id" readonly="1" force_save="1"/>
                            <field name="create_uid"/>
                            <field name="create_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Approver Lines">
                            <field name="approval_matrix_ids" context="{'approval_matrix_ids':approval_matrix_ids}">
                                <tree editable="bottom">
                                    <field name="sequence"/>
                                    <field name="approver_types" required="1"/>
                                    <field name="approver_ids" force_save="1" widget="many2many_tags" attrs="{'readonly':[('approver_types','=','by_hierarchy')],'required':[('approver_types','=','specific_approver')]}" options="{'no_open':True,'no_create': True}"/>
                                    <field name="minimum_approver"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_attendance_offline_approval_matrix" model="ir.actions.act_window">
        <field name="name">Attendance Offline Approval Matrix</field>
        <field name="res_model">hr.attendance.offline.approval.matrix</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_hr_attendance_offline_approval_matrix"
              action="action_hr_attendance_offline_approval_matrix"
              parent="hr_attendance.menu_hr_attendance_settings"
              sequence="100"/>
</odoo>