<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="hr_attendance_reason_categ_view_form" model="ir.ui.view">
            <field name="name">hr.attendance.reason.categ.view.form</field>
            <field name="model">hr.attendance.reason.categ</field>
            <field name="arch" type="xml">
                <form string="Attendance Reason Category">
                    <sheet>
                        <group>
                            <group >
                                <field name="name" />
                                <field name="company_id" />
                                <field name="create_date" />
                                <field name="create_uid" />
                                
                            </group>
                            
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="hr_attendance_reason_categ_view_tree" model="ir.ui.view">
            <field name="name">hr.attendance.reason.categ.view.tree</field>
            <field name="model">hr.attendance.reason.categ</field>
            <field name="arch" type="xml">
                <tree string="Attendance Reason Category">
                    <field name="name" />
                    <field name="company_id" />
                    <field name="create_date" />
                    <field name="create_uid" />
                    
                </tree>
            </field>
        </record>

        <record id="attendance_reason_categ_action" model="ir.actions.act_window">
            <field name="name">Attendance Reason Category</field>
            <field name="res_model">hr.attendance.reason.categ</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem
            id="attendance_reason_categ_menu"
            name="Attendance Reason Category"
            action="attendance_reason_categ_action"
            groups="equip3_hr_employee_access_right_setting.group_hr_manager"
            sequence="4"/>
    
        
    
    </data>
    

</odoo>
