<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_res_users_image_form_inherit" model="ir.ui.view">
            <field name="name">view.res.users.image.form.inherit</field>
            <field name="model">res.users.image</field>
            <field name="inherit_id" ref="hr_attendance_face_recognition.view_res_user_image_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form" position="inside">
                    <style>
                        .btn-save-and-close, .close {
                            display:none !important;
                        }
                    </style>
                </xpath>
                <xpath expr="//field[@name='res_user_id']" position="after">
                    <br/><br/>
                    <label for="is_cropped" string="Is Cropped"/>
                    <field name="is_cropped" readonly="1"/>
                    <br/>
                    <label for="minimum_face_descriptor" string="Minimum Face Descriptor"/>
                    <field name="minimum_face_descriptor" readonly="1"/>
                    <br/>
                    <label for="current_face_descriptor" string="Current Face Descriptor"/>
                    <field name="current_face_descriptor" class="current_face_descriptor" readonly="1"/>
                    <br/>
                    <p style="color:red; font-size: 14px !important;" class="text-left">*Please Add face to the required minimum amount.</p> 
                </xpath>
            </field>
        </record>

        <record id="res_users_preferences_recognition_inherit" model="ir.ui.view">
            <field name="name">res.users.preferences.recognition.inherit</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="hr_attendance_face_recognition.res_users_preferences_recognition"/>
            <field name="priority" eval="99"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='res_users_image_ids']" position="replace">
                    <field name="minimum_face_descriptor" invisible="1" />
                    <field name="current_face_descriptor" invisible="1" />
                    <field name="res_users_image_ids"
                      class="o_website_sale_image_list"
                      context="{'default_name': name, 'default_res_user_id': id, 'default_minimum_face_descriptor': minimum_face_descriptor, 'default_current_face_descriptor': current_face_descriptor}"
                      mode="kanban"
                      options="{'create_text':'Add face', 'face_mode': 'user'}"
                      nolabel="1"
                      attrs="{'readonly': [('res_users_image_ids', '!=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>