<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        

        
        <record id="res_config_settings_view_attendance_equip3_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.attendance</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="99"/>
            <field name="inherit_id" ref="hr_attendance.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='pincode_setting_container']" position="after">
                    <div class="row mt16 o_settings_container" id="attendance_status">
                        <div class="col-12 col-lg-6 o_setting_box" id="attendance_status_settings">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Default Attendance Status</span>
                                <div class="text-muted">
                                    Attendance Status
                                </div>
                                <div class="text-muted">
                                    <field name="attendance_status"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Mobile Attendance Settings</h2>
                    <div class="row mt16 o_settings_container"
                         name="mobile_attendance_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="auto_compare_face_setting">
                            <div class="o_setting_left_pane">
                                <div class="text-muted">
                                    <field name="auto_compare_face"/>
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Auto Compare Face Contour</span>
                                <div class="text-muted">
                                    *On/Off the switch for using an Auto Face Contour Compare on Mobile Apps Attendance
                                </div>
                                <div class="content-group" attrs="{'invisible':[('auto_compare_face','=',True)]}">
                                    <div class="row mt16">
                                        <field name="auto_face_compare_time"/>
                                        <label for="auto_face_compare_time" class="col-lg-3 o_light_label oe_inline" string="Seconds"/>
                                    </div>
                                    <div class="text-muted">
                                    *0 Value will give some Manual Capture Button on Mobile Apps Attendance
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Attendance Approval Setting</h2>
                    <div class="row mt16 o_settings_container" name="attendance_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="attendance_control_setting">
                            <div class="content-group">
                                <div class="mt16">
                                    <div class="o_setting_left_pane">
                                        <field name="attendance_approval_matrix"/>
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label for="attendance_approval_matrix" string="Attendance Approval Matrix"/>
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <div class="text-muted">
                                            On/Off switch for approval matrix on Attendance Change Request and Working Schedule Exchange.
                                        </div>
                                    </div>
                                </div>
                                <div class="mt16" attrs="{'invisible':[('attendance_approval_matrix','=',False)]}">
                                    <label for="attendance_type_approval" string="Approval Method"/>
                                    <field style="margin-left:10px;" name="attendance_type_approval" class="oe_inline"
                                           required="1"/>
                                </div>
                                <div class="mt16"
                                     attrs="{'invisible':['|', ('attendance_approval_matrix','=',False), ('attendance_type_approval','!=','employee_hierarchy')]}">
                                    <label for="attendance_level" string="Approval Levels"/>
                                    <field style="margin-left:16px;" name="attendance_level" class="oe_inline"
                                           required="1"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Update Attendance Status Scheduler Setting</h2>
                    <div class="row mt16 o_settings_container" id="update_attendance_status_scheduler">
                        <div class="col-12 col-lg-6 o_setting_box" id="update_attendance_status_scheduler_settings">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Update Attendance Status Limit</span>
                                <div class="text-muted">
                                    The value of this field will be a limitation parameter in the Update Attendance Status Scheduler to retrieve data that is past the day.
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <field name="update_attendance_status_limit" required="1"/>
                                        <label for="update_attendance_status_limit" class="col-lg-3 o_light_label oe_inline" string="Days"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Attendance Change Request Limit Setting</h2>
                    <div class="row mt16 o_settings_container" id="past_date_limit">
                        <div class="col-12 col-lg-6 o_setting_box" id="past_date_limit_settings">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Past Date Limit</span>
                                <div class="text-muted">
                                    The value of this field will be a limitation parameter in the Attendance Change Request.
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <field name="past_date_limit"/>
                                        <label for="past_date_limit" class="col-lg-3 o_light_label oe_inline" string="Days"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Validation Setting</h2>
                    <div class="row mt16 o_settings_container" id="attendance_status">
                        <div class="col-12 col-lg-6 o_setting_box" id="attendance_status_settings">
                            <div class="o_setting_left_pane">
                                <div class="text-muted">
                                <field name="attendance_validation"/>
                            </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Validation</span>
                                <div class="text-muted">
                                    Allow Validation for schedule exchanges in the past date
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Notification</h2>
                    <div class="row mt16 o_settings_container"
                         name="attendance_notification_setting_wa_container">
                        <div class="col-12 col-lg-6 o_setting_box"
                             id="attendance_notification_wa_setting">
                            <div class="o_setting_left_pane">
                                <field name="send_by_wa_attendance"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Send By Whatsapp" for="send_by_wa_attendance"/>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container"
                         name="attendance_notification_setting_email_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="attendance_notification_email_setting">
                            <div class="o_setting_left_pane">
                                <field name="send_by_mail_attendance"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Send By Email" for="send_by_mail_attendance"/>
                            </div>
                        </div>
                    </div>
                    <!--                Auto Email Follow Cron-->
                    <div class="row mt16 o_settings_container" name="auto_follow_up_attendance">
                        <div class="col-12 col-lg-6 o_setting_box" id="auto_follow_up_attendance_setting">
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="auto_follow_up_attendance"/>
                                    <label for="auto_follow_up_attendance" string="Auto Follow Up" class="oe_inline"
                                           style="margin-left:10px;"/>
                                </div>
                                <div class="mt16" attrs="{'invisible':[('auto_follow_up_attendance','!=',True)]}">
                                    <label for="interval_number_attendance" string="Execute Every"/>
                                    <div attrs="{'invisible':[('auto_follow_up_attendance','!=',True)]}">
                                        <field name="interval_number_attendance" class="oe_inline"
                                               attrs="{'required':[('auto_follow_up_attendance','=',True)]}"/>
                                        <field name="interval_type_attendance" class="oe_inline"
                                               attrs="{'required':[('auto_follow_up_attendance','=',True)]}"/>
                                    </div>
                                </div>
                                <div class="mt16" attrs="{'invisible':[('auto_follow_up_attendance','!=',True)]}">
                                    <label for="number_of_repetitions_attendance" string="Number of Repetitions"/>
                                    <field name="number_of_repetitions_attendance" class="oe_inline"
                                           attrs="{'required':[('auto_follow_up_attendance','=',True)]}"/>
                                </div>
                                <div class="o_setting_left_pane">
                                    <field name="face_recognition_access"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Face recognition access</span>
                                    <div class="text-muted">
                                        Use face recognition for access to check in/out
                                    </div>
                                </div>
                                <div class="mt16" attrs="{'invisible':[('face_recognition_access','=',False)]}">
                                    <label for="amount_of_add_face_descriptor" string="Minimum Face Descriptor"/>
                                    <field name="amount_of_add_face_descriptor" class="oe_inline" required="1"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

