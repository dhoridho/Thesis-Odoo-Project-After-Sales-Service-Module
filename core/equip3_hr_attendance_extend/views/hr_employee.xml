<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_employee_form_extend" model="ir.ui.view">
            <field name="name">hr.employee.form.extend</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='hr_settings']/group/group[@name='identification_group']" position="inside">
                    <field name="allow_offline_attendance"/>
                    <field name="auto_submit_data_record" attrs="{'invisible': [('allow_offline_attendance','=',False)]}"/>
                </xpath>
                <field name="pin" position="after">
                    <field name="attendance_id_pin" string="Attendance ID"/>
                </field>
            </field>
        </record>

    </data>
</odoo>