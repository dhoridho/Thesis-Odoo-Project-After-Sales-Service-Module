<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="assets_backend" name="hr_attendance_location assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/equip3_hr_attendance_extend/static/src/js/my_attendances.js"></script>
        </xpath>
    </template>


    <template id="assets_backend_hr_attendance_face_recognition"  inherit_id="hr_attendance_face_recognition.assets_backend_hr_attendance_face_recognition">
        <xpath expr="//script[@src='/hr_attendance_face_recognition/static/src/js/kiosk_mode_face_recognition.js']" position="replace">
                <script type="text/javascript" src="/equip3_hr_attendance_extend/static/src/js/kiosk_mode_face_recognition.js"/>
            </xpath>
        <xpath expr="//script[@src='/hr_attendance_face_recognition/static/src/js/my_attendances_face_recognition.js']" position="replace">
                <script type="text/javascript" src="/equip3_hr_attendance_extend/static/src/js/my_attendances_face_recognition.js"/>
            </xpath>
    </template>

    <template id="assets_backend_hr_attendance_base"  inherit_id="hr_attendance_base.assets_backend_hr_attendance_base">
        <xpath expr="//script[@src='/hr_attendance_base/static/src/js/kiosk_mode_base.js']" position="replace">
                <script type="text/javascript" src="/equip3_hr_attendance_extend/static/src/js/kiosk_mode_base.js"/>
            </xpath>
    </template>





    <template id="inherit_web_image_webcam_assets_backend" inherit_id="web_image_webcam.assets_backend">
        <xpath expr="//script[@src='/web_image_webcam/static/src/js/webcam_widget.js']" position="replace">

            <script type="text/javascript"
                    src="/equip3_hr_attendance_extend/static/src/js/webcam_widget.js"/>
        </xpath>
    </template>


</odoo>
