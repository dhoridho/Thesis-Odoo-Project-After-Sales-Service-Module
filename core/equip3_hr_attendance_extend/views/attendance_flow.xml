<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="attendance_flow_view_form" model="ir.ui.view">
        <field name="name">attendance.flow.view.form</field>
        <field name="model">attendance.flow</field>
        <field name="arch" type="xml">
            <form string="Attendance Flow" class="attendance_flow_menu d-flex flex-column">
                <div class="content-header">
                    <div class="d-flex p-3 w-100">
                        <span>Attendance Flow</span>
                    </div>
                </div>
                <div class="content-body">
                    <div class="container h-100">
                        <div class="row h-100">
                            <div class="col-md-2 d-flex flex-column">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12 col-12">
                                        <button name="equip3_hr_working_schedule.hr_shift_variation_act_window"
                                                type="action"
                                                class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid"
                                                     src="/equip3_hr_attendance_extend/static/src/img/configuration.svg"/>
                                            </div>
                                            <div class="button-text">Shift Variations</div>
                                            <div class="menu-arrow-down-right">
                                                <span class="arrow is-triangle arrow-bar is-down-right"></span>
                                            </div>
                                        </button>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12">
                                        <button name="action_none"
                                                type="object"
                                                class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid"
                                                     src="/equip3_hr_attendance_extend/static/src/img/configuration.svg"/>
                                            </div>
                                            <div class="button-text">Late Deduction Rules</div>
                                            <div class="menu-arrow">
                                                <span class="arrow is-triangle arrow-bar is-right"></span>
                                            </div>
                                        </button>
                                    </div>

                                    <div class="col-md-12 col-sm-12 col-12">
                                        <button name="action_none"
                                                type="object"
                                                class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid"
                                                     src="/equip3_hr_attendance_extend/static/src/img/configuration.svg"/>
                                            </div>
                                            <div class="button-text">Overtime Rules</div>

                                            <div class="menu-arrow-up-right">
                                                <span class="arrow is-triangle arrow-bar is-up-right"></span>
                                            </div>
                                        </button>
                                    </div>
                                </div>
                            </div>


                            <div class="col-md-2 d-flex flex-column">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12 col-12">
                                        <button name="resource.action_resource_calendar_form"
                                                type="action"
                                                class="btn btn-default">


                                            <div class="button-img">
                                                <img class="img-fluid"
                                                     src="/equip3_hr_attendance_extend/static/src/img/configuration.svg"/>
                                            </div>
                                            <div class="button-text">Working Times</div>
                                            <div class="menu-arrow">
                                                <span class="arrow is-triangle arrow-bar is-right"></span>
                                            </div>
                                        </button>
                                    </div>
                                </div>
                            </div>


                            <div class="col-md-2 d-flex flex-column">
                                <div class="row">

                                    <div class="col-md-12 col-sm-12 col-12">
                                        <button name="equip3_hr_working_schedule_calendar.action_hr_generate_workingcalendar"
                                                type="action"
                                                class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid"
                                                     src="/equip3_hr_attendance_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Generate working Calendar</div>
                                            <div class="menu-arrow-up-right">
                                                <span class="arrow is-triangle arrow-bar is-up-right"></span>
                                            </div>
                                            <div class="menu-arrow-down-right">
                                                <span class="arrow is-triangle arrow-bar is-down-right"></span>
                                            </div>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2 d-flex flex-column">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12 col-12">
                                        <button name="equip3_hr_attendance_extend.working_schedule_exchange_action_manager"
                                                type="action"
                                                class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid"
                                                     src="/equip3_hr_attendance_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Working Schedule Exchange Approve</div>
                                        </button>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12">
                                        <div class="menu-arrow-up">
                                            <span class="arrow is-triangle arrow-bar is-up"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-12 col-sm-12 col-12">
                                        <button name="equip3_hr_attendance_extend.working_schedule_exchange_custom_action"
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_attendance_extend/static/src/img/my-attendance.svg"/>
                                            </div>
                                            <div class="button-text">Working Schedule Exchange</div>

                                        </button>
                                    </div>

                                    <div class="col-md-12 col-sm-12 col-12">
                                        <div class="menu-arrow-up">
                                            <span class="arrow is-triangle arrow-bar is-up"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-12 col-sm-12 col-12">
                                        <button name="equip3_hr_working_schedule_calendar.action_employee_working_schedule_summary"
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_attendance_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Employee Working Calendar</div>
                                            <div class="menu-arrow-up-right">
                                                <span class="arrow is-triangle arrow-bar is-up-right"></span>
                                            </div>
                                            <div class="menu-arrow-down-right">
                                                <span class="arrow is-triangle arrow-bar is-down-right"></span>
                                            </div>
                                        </button>
                                    </div>


                                    <div class="col-md-12 col-sm-12 col-12">
                                        <button name="equip3_hr_attendance_extend.action_my_working_schedule_action"
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_attendance_extend/static/src/img/my-attendance.svg"/>
                                            </div>
                                            <div class="button-text">My Working Calendar</div>
                                             <div class="menu-arrow">
                                                <span class="arrow is-triangle arrow-bar is-right"></span>
                                            </div>
                                        </button>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12" style="padding-bottom:190%;">
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-2 d-flex flex-column">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12 col-12">
                                        <button name="equip3_hr_attendance_extend.hr_attendance_change_action_manager"
                                                type="action"
                                                class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid"
                                                     src="/equip3_hr_attendance_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Attendance Change Request</div>
                                        </button>
                                    </div>
                                     <div class="col-md-12 col-sm-12 col-12">
                                        <div class="menu-arrow-up">
                                            <span class="arrow is-triangle arrow-bar is-up"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12">
                                        <button name="hr_attendance.hr_attendance_action"
                                                type="action"
                                                class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid"
                                                     src="/equip3_hr_attendance_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Employee Attendance</div>
                                             <div class="menu-arrow-up-right">
                                                <span class="arrow is-triangle arrow-bar is-up-right"></span>
                                            </div>
                                            <div class="menu-arrow-down-right">
                                                <span class="arrow is-triangle arrow-bar is-down-right"></span>
                                            </div>
                                        </button>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12">
                                        <button name="equip3_hr_attendance_extend.action_view_hr_roster_calendar"
                                                type="action"
                                                class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid"
                                                     src="/equip3_hr_attendance_extend/static/src/img/reporting.svg"/>
                                            </div>
                                            <div class="button-text">Roster Calendar</div>
                                        </button>
                                    </div>

                                    <div class="col-md-12 col-sm-12 col-12">
                                        <button name="hr_attendance.hr_attendance_action_my_attendances"
                                                type="action"
                                                class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid"
                                                     src="/equip3_hr_attendance_extend/static/src/img/my-attendance.svg"/>
                                            </div>
                                            <div class="button-text">Check-in/out</div>
                                             <div class="menu-arrow">
                                                <span class="arrow is-triangle arrow-bar is-right"></span>
                                            </div>
                                        </button>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12">
                                        <div class="menu-arrow-up">
                                            <span class="arrow is-triangle arrow-bar is-up"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-12 col-sm-12 col-12">
                                        <button name="hr.hr_config_settings_action"
                                                type="action"
                                                class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid"
                                                     src="/equip3_hr_attendance_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Settings</div>
                                        </button>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12" style="padding-bottom:80%;">
                                    </div>
                                </div>
                            </div>


                            <div class="col-md-2 d-flex flex-column">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12 col-12">
                                        <button name="equip3_hr_attendance_extend.action_view_hr_attendance_report"
                                                type="action"
                                                class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid"
                                                     src="/equip3_hr_attendance_extend/static/src/img/reporting.svg"/>
                                            </div>
                                            <div class="button-text">Attendance Report</div>
                                        </button>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12" style="padding-bottom: 40%;">
                                        <button name="hr_attendance.hr_attendance_action_graph"
                                                type="action"
                                                class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid"
                                                     src="/equip3_hr_attendance_extend/static/src/img/reporting.svg"/>
                                            </div>
                                            <div class="button-text">Attendance Analysis</div>
                                        </button>
                                    </div>

                                    <div class="col-md-12 col-sm-12 col-12">
                                        <button name="equip3_hr_attendance_extend.hr_attendance_my_attendance_action"
                                                type="action"
                                                class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid"
                                                     src="/equip3_hr_attendance_extend/static/src/img/my-attendance.svg"/>
                                            </div>
                                            <div class="button-text">My Attendance</div>
                                        </button>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12">
                                        <div class="menu-arrow-down">
                                            <span class="arrow is-triangle arrow-bar is-down"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-12 col-sm-12 col-12">
                                        <button name="equip3_hr_attendance_extend.hr_attendance_change_custom_action"
                                                type="action"
                                                class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid"
                                                     src="/equip3_hr_attendance_extend/static/src/img/my-attendance.svg"/>
                                            </div>
                                            <div class="button-text">My Attendance Change Request</div>
                                        </button>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </form>
        </field>
    </record>

    <record id="attendance_flow_act_window" model="ir.actions.act_window">
        <field name="name">Attendance Flow</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">attendance.flow</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <record id="attendance_flow_action_client" model="ir.actions.client">
        <field name="name">Attendance Flow</field>
        <field name="tag">attendance_flow_tag</field>
    </record>

    <menuitem
            id="attendance_flow_menu"
            name="Attendance Flow"
            action="attendance_flow_action_client"
            parent="hr_attendance.menu_hr_attendance_root"
            sequence="-1"/>
</odoo>