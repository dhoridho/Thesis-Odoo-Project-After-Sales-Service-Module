<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_working_wizard_form" model="ir.ui.view">
            <field name="name">hr.working.sheet.wizard.form</field>
            <field name="model">hr.working.sheet.wizard</field>
            <field name="arch" type="xml">
                <form string="Confirmation Message">
                    <sheet>
                        <group>
                            <field name="state" invisible="1" />
                            <field name="feedback" attrs="{'required': [('state','=','rejected')]}"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="submit" type="object" string="Submit" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="hr_working_wizard_action" model="ir.actions.act_window">
            <field name="name">Confirmation Message</field>
            <field name="res_model">hr.working.sheet.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
