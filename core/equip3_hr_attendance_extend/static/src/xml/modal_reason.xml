<?xml version="1.0" encoding="UTF-8"?>
<template id="use_reason_modal_template">
    <t t-name="use_reason_modal_template">

        <div class="modal fade" id="warningModal" tabindex="-1" role="dialog" aria-labelledby="warningModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h5 class="modal-title text-center" id="warningModalLabel">Selected Active Location was Out of Range/Radius</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <!-- <span aria-hidden="true">&times;</span> -->
                        </button>
                    </div>

                    <!-- Modal Body -->
                    <div class="modal-body text-center">
                        <!-- Image at the Top -->
                        <div class="mb-3">
                            <img src="equip3_hr_attendance_extend/static/src/img/danger_location.png" alt="Warning" class="img-fluid" style="width: 120px;" />
                        </div>
                        <!-- Warning Icon -->
                        <p class="text-warning">
                            <i class="fa fa-exclamation-triangle fa-2x" aria-hidden="true"></i>
                        </p>
                        <!-- Form Inputs -->
                        <div class="form-group">
                            <label for="reason_category">Reason Category:</label>
                            <select class="form-control" id="reason_category" name="reason_category">
                                <!-- Options will be dynamically populated via JavaScript -->
                            </select>

                        </div>
                        <div class="form-group">
                            <label for="notes">Notes:</label>
                            <textarea class="form-control" id="notes" name="notes" rows="3"></textarea>
                        </div>
                    </div>

                    <!-- Modal Footer -->
                    <div class="modal-footer justify-content-center">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary" id="saveReasonButton" data-dismiss="modal">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </t>
</template>
