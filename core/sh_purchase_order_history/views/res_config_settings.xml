<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_res_config_settings_view_form_inherited" model="ir.ui.view">
        <field name="name">sh.res.config.settings.inherit.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='purchase']//div[1]//div[5]" position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane" />
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Last Confirmed Order Display Limit</span>
                        <div class="text-muted">
                            <field name="sh_purchase_configuration_limit" />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
