<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="sh_purchase_order_history_form_view_inherit" model="ir.ui.view">
        <field name="name">purchase.order.history.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[1]" position="after">
                <page string="Order History">
                    <button name="action_all_purchase_reorder" type="object" string="All Lines Reorder" style="margin-top: 12px; margin-bottom: 12px;" />
                    <field name="order_history_line">
                        <tree string="Order Histroy" editable="bottom">
                            <field name="purchase_reorder" nolabel="1" />
                            <field name="po_id" string="Purchase Order" />
                            <field name="name" invisible="1" />
                            <field name="product_id" />
                            <field name="price_unit" string="Price" />
                            <field name="product_qty" />
                            <field name="product_uom" string="Unit" />
                            <field name="price_subtotal" />
                            <button name="purchases_reorder" string="Reorder" type="object" class="oe_highlight" />
                        </tree>
                        <form string="Order Histroy">
                            <sheet>
                                <group>
                                    <group>
                                        <field name="po_id" string="Purchase Order" />
                                        <field name="price_unit" string="Price" />
                                        <field name="product_uom" string="Unit" />
                                    </group>
                                    <group>
                                        <field name="product_id" />
                                        <field name="product_qty" />
                                        <field name="price_subtotal" />
                                    </group>
                                </group>
                            </sheet>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
