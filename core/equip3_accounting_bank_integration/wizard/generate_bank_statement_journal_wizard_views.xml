<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_bank_statement_line_wizard" model="ir.ui.view">
        <field name="name">account.bank.statement.line.wizard.form</field>
        <field name="model">account.bank.statement.line.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Bank Statement Journal">
                <div>
                    <p>
                        Post Bank Statement Journal Entries<br/><br/>
                        This wizard will post Journal Entries for Bank Statement.<br/>
                        This will create entry at bank statement and use on bank reconciliation.
                    </p> 
                </div>
                <footer>
                    <button string="Generate Entries" name="asset_compute" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
         </field>
    </record>

    <record id="action_account_bank_statement_line_wizard" model="ir.actions.act_window">
        <field name="name">Generate Bank Statement Journal</field>
        <field name="res_model">account.bank.statement.line.wizard</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_account_bank_statement_line_wizard"/>
        <field name="target">new</field>
    </record>

    <menuitem name="Generate Bank Statement Journal"
              action="action_account_bank_statement_line_wizard"
              id="menu_action_account_bank_statement_line_wizard"
              parent="account.menu_finance_entries_generate_entries"
              sequence="113"/>
</odoo>
