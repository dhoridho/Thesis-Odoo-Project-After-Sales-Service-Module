<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_bank_statement_form_inherit" model="ir.ui.view">
            <field name="name">account.bank.statement.form</field>
            <field name="model">account.bank.statement</field>
            <field name="inherit_id" ref="account.view_bank_statement_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[@name='button_post']" position="before">
                    <button string="Get Account Statement" name="action_get_mutation_data" type="object" class="oe_highlight" attrs="{'invisible': [('hide_mutation_button', '=', True)]}"/>
                </xpath>

                <xpath expr="//sheet/group/group[2]" position="inside">
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="hide_mutation_button" invisible='1'/>
                </xpath>

                <field name="date" position="attributes">
                    <attribute name="string">Created At</attribute>
                </field>

                <field name="company_id" position="after">
                    <field name="branch_id" position="move"/>
                </field>

                <field name="amount" position="after">
                    <field name="currency_id" string="Currency" optional="hide"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
