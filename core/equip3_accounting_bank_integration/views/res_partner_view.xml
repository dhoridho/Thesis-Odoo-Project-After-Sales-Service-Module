<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--
        Partners Extension
        -->
        <record id="bank_integration_view_partner_property_form" model="ir.ui.view">
            <field name="name">res.partner.property.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="priority">2</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="groups_id" eval="[(5,)]"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='bank_ids']" position="before">
                    <field name="bank_info" nolabel="1" readonly="1" colspan="2"/>
                </xpath>
            </field>
        </record>

        <record id="view_company_partner_bank_form" model="ir.ui.view">
            <field name="name"> company.res.partner.bank.form</field>
            <field name="model">res.partner.bank</field>
            <field name="inherit_id" ref="account.view_company_partner_bank_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='acc_holder_name']" position="after">
                    <field name="acc_holder_email"/>
                    <field name="acc_holder_address"/>
                    <field name="acc_holder_type"/>
                    <field name="acc_holder_resident"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
