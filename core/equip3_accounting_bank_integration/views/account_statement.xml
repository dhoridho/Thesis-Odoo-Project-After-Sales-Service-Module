<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
       <record id="view_account_statement_tree" model="ir.ui.view">
            <field name="name">account.bank.statement.integrate.tree</field>
            <field name="model">account.bank.statement.integrate</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="journal_id"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="status"/>
                    <field name="state"/>
                    <field name="created_by"/>
                    <field name="created_date"/>
                    
                </tree>
            </field>
        </record>

        <record id="view_account_statement_form" model="ir.ui.view">
            <field name="name">account.bank.statement.integrate.form</field>
            <field name="model">account.bank.statement.integrate</field>
            <field name="arch" type="xml">
                <form string="Integrate Bank Statement">                
                    <header>
                        <button string="Import" name="action_import" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        
                        <field name="state" widget="statusbar" statusbar_visible="draft,imported,failed"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1 class="mt0" attrs="{'invisible':[('name', '=', '/')]}">
                                <field name="name"/>
                            </h1>
                        </div>

                        <group>
                            <group id="header_left_group">
                                <field name="journal_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="date_from" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="date_to" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="status"/>
                                <field name="created_by"/>
                                <field name="created_date"/>                            
                            </group>
                        </group>
                    </sheet>
                    <!-- <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>  -->
                </form>
            </field>
        </record>

        <record id="action_account_statement" model="ir.actions.act_window">
            <field name="name">Integrate Bank Statement</field>
            <field name="res_model">account.bank.statement.integrate</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context"></field>
            <field name="domain"></field>
            <field name="view_id" ref="view_account_statement_tree"/>            
        </record>

        <!-- <menuitem action="action_account_statement" id="menu_action_account_statement" parent="equip3_accounting_operation.internal_cash_bank_transfer_menu"/> -->
    </data>
</odoo>