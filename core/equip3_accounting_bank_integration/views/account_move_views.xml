<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_move_form_inherit_bank_integration" model="ir.ui.view">
        <field name="name">mr_account_move_form_inherit_bank_integration</field>
        <field name="model">account.move</field>
        <field name="priority">18</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_debit_notes']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='button_cancel']" position="attributes">
                <attribute name="attrs">{'invisible' : [('state', '=', 'cancel')]}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_post'][2]" position="attributes">
                <attribute name="attrs">{'invisible': ['|', '|', '|', ('state', '!=', 'confirmed'), ('auto_post', '=', True), ('move_type', '=', 'entry'), ('is_invoice_approval_matrix', '=', True)]}</attribute>
                <attribute name="string">Post</attribute>
            </xpath>
            <xpath expr="//button[@name='action_post'][2]" position="before">
                <button name="action_confirm" string="Confirm" class="oe_highlight" type="object" attrs="{'invisible': ['|','|',('state', '!=', 'draft'), ('move_type', '=', 'entry'), ('is_invoice_approval_matrix', '=', True)]}"/>
            </xpath>
        </field>
    </record>
</odoo>