<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_product_cancel_tree" model="ir.ui.view">
        <field name="name">product.cancel.tree</field>
        <field name="model">product.cancel</field>
        <field name="arch" type="xml">
            <tree>
                <field name="order_ref"/>
                <field name="product_id"/>
                <field name="qty"/>
                <field name="uom_id"/>
                <field name="src_location_id"/>
                <field name="cashier_id"/>
                <field name="cancel_reason"/>
            </tree>
        </field>
    </record>

    <record id="view_product_cancel_form" model="ir.ui.view">
        <field name="name">product.cancel.form</field>
        <field name="model">product.cancel</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="order_ref"/>
                            <field name="pos_order_id"/>
                            <field name="product_id"/>
                            <field name="qty"/>
                            <field name="uom_id"/>
                        </group>
                        <group>
                            <field name="src_location_id"/>
                            <field name="cashier_id"/>
                            <field name="cancel_reason"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_product_cancel" model="ir.actions.act_window">
        <field name="name">Product Cancelled History</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.cancel</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
           Create a new Product Cancel Reason
          </p>
        </field>
    </record>

    <menuitem id="menu_pos_cancel_history"
            name="History"
            parent="point_of_sale.menu_point_rep"/>

    <menuitem id="menu_product_cancel"
          name="Product Cancelled History"
          parent="menu_pos_cancel_history"
          action="action_product_cancel"/>

</odoo>