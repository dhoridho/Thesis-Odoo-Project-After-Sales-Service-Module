<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="reservation_list_sequence" model="ir.sequence">
        <field name="name">Reservation List Sequence</field>
        <field name="code">reserve.order</field>
        <field name="prefix">RSV/%(range_y)s/%(month)s/%(day)s/</field>
        <field name="padding">3</field>
        <field eval="True" name="use_date_range"/>
        <field eval="1" name="number_next"/>
        <field eval="1" name="number_increment"/>
        <field name="company_id" eval="False"/>
    </record>

    <record id="reservation_order_view_search" model="ir.ui.view">
        <field name="name">reservation.order.search</field>
        <field name="model">reserve.order</field>
        <field name="arch" type="xml">
            <search string="Reservation Order">
                <field name="name"/>
                <field name="customer_name"/>
                <field name="cust_phone_no"/>
                <field name="reservation_from"/>
                <field name="reservation_to"/>
                <field name="table_no"/>
                <field name="table_floor"/>
                <field name="reservation_seat"/>
            </search>
        </field>
    </record>

    <record id="view_reserve_order_tree" model="ir.ui.view">
        <field name="name">reserve.order.tree</field>
        <field name="model">reserve.order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="customer_name"/>
                <field name="cust_phone_no"/>
                <field name="reservation_from"/>
                <field name="reservation_to"/>
                <field name="table_no"/>
                <field name="table_floor"/>
                <field name="reservation_seat"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_reserve_order_form" model="ir.ui.view">
        <field name="name">reserve.order.form</field>
        <field name="model">reserve.order</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="customer_name"/>
                            <field name="cust_phone_no"/>
                            <field name="reservation_from"/>
                            <field name="reservation_to"/>
                            <field name="table_no"/>
                            <field name="table_floor"/>
                            <field name="reservation_seat"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_reserve_order" model="ir.actions.act_window">
        <field name="name">Reservation List</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">reserve.order</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="search_view_id" ref="reservation_order_view_search"/> -->
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
           Create a new reserve order.
          </p>
        </field>
    </record>

    <menuitem id="menu_reserve_order"
          name="Reservation List"
          parent="menu_pos_cancel_history"
          action="action_reserve_order"/>

</odoo>