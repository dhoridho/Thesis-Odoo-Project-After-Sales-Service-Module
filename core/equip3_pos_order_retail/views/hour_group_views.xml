<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_move_line_tree" model="ir.ui.view">
            <field name="name">hour.group.tree</field>
            <field name="model">hour.group</field>
            <field eval="2" name="priority"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="start_hour"/>
                    <field name="end_hour"/>
                    <field name="active" widget='boolean_toggle'/>
                </tree>
            </field>
        </record>
        <record id="view_move_line_form" model="ir.ui.view">
            <field name="name">hour.group.form</field>
            <field name="model">hour.group</field>
            <field eval="2" name="priority"/>
            <field name="arch" type="xml">
                <form string="Hour Group">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="start_hour" widget="float_time" options="{'round_off': True, 'time_only': True}"/>
                                <field name="end_hour" widget="float_time" options="{'round_off': True, 'time_only': True}"/>
                                <field name="active" widget='boolean_toggle'/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_hour_group" model="ir.actions.act_window">
            <field name="name">Hour Group</field>
            <field name="res_model">hour.group</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem id="menu_action_hour_group"
                  action="action_hour_group"
                  parent="point_of_sale.menu_point_of_sale"
                  sequence="102" groups="sales_team.group_sale_salesman"/>
    </data>

</odoo>