<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_promotion_form_inherit_one" model="ir.ui.view">
        <field name="name">pos.promotion.form.inherit.one</field>
        <field name="model">pos.promotion</field>
        <field name="inherit_id" ref="pos_retail.pos_promotion_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='sync_promotion_all_pos_online']" position="after">
                <button name="apply_to_selected_pos" string="Apply to Selected POS" type="object" />
            </xpath>
            <field name="to_time" position="after">
                <field name="card_payment_id"/>
            </field>
        </field>
    </record>
    <record id="pos_promotion_form_inherit_one_is_stack" model="ir.ui.view">
        <field name="name">pos.promotion.form.inherit.one</field>
        <field name="model">pos.promotion</field>
        <field name="inherit_id" ref="equip3_POS_master_data_retail.view_form_pos_promotion_inherit"/>
        <field name="arch" type="xml">
            <field name="is_stack" position="before">
                <field name="pos_apply" widget="many2many_tags"/>
            </field>
        </field>
    </record>
</odoo>