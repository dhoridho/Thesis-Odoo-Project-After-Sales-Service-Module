<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="pos_config_retail">
            <field name="name">pos.config.retail</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="pos_retail.pos_config_retail"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[4]//group//field[@name='allow_lock_table']" position="attributes">
                    <attribute name="string">Reservation Table</attribute>
                </xpath>
                <field name="allow_merge_lines" position="after">
                    <field name="is_complementary"/>
                    <field name="required_ask_seat"/>
                </field>
            </field>
    </record>

    <record model="ir.ui.view" id="pos_config_retail_extend">
        <field name="name">pos.config.retail.extend</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@groups='point_of_sale.group_pos_manager']//group//group[3]" position="inside">
                <field name="table_reservation_list" attrs="{'invisible': ['|', '|', ('sync_multi_session', '=', False), ('screen_type', '=', 'kitchen'), ('restaurant_order', '=', True)]}"/>
            </xpath>
        </field>
    </record>

</odoo>