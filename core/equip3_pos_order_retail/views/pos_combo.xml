<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<menuitem id="pos_retail.menu_pos_combo_item" active="False"/>
	<menuitem id="pos_retail.menu_product_combo" active="False"/>
	
	<record id="product_template_form_view_retail" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="pos_retail.product_template_form_view_retail"/>
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='is_combo']" position="attributes">
            		<attribute name="invisible">1</attribute>
            	</xpath>
            	<xpath expr="//field[@name='is_combo_item']" position="attributes">
            		<attribute name="invisible">1</attribute>
            	</xpath>
            	<xpath expr="//group[@name='combo']" position="attributes">
            		<attribute name="invisible">1</attribute>
            	</xpath>
            	<xpath expr="//field[@name='qty_warning_out_stock']" position="after">
            		<field name="is_combo_product"/>
            	</xpath>
                <xpath expr="//group[@name='combo']" position="before">
                    <group name="combo_option" string="Combo Option" attrs="{'invisible': [('is_combo_product', '=', False)]}">
                        <field name="combo_option_id"/>
                        <field name="combo_option_items" attrs="{'invisible':[('combo_option_id','=',False)]}">
                            <tree>
                                <field name="product_id"/>
                                <field name="extra_price"/>
                            </tree>
                        </field>
                    </group>
                </xpath>
            </field>
    </record>

    <record id="combo_option_form_view" model="ir.ui.view">
        <field name="name">combo.option.form</field>
        <field name="model">combo.option</field>
        <field name="arch" type="xml">
            <form string="Combo Option">
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>
                    <div class="oe_title">
                        <label class="oe_edit_only" for="combo_name" string="Name"/>
                        <h1><field name="combo_name" placeholder="Combo Option Name"/></h1>
                    </div>
                    <div class="oe_left">
                        <field name="item_ids">
                            <tree editable="bottom">
                                <field name="product_id"/>
                                <field name="extra_price"/>
                            </tree>
                        </field>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
    <record id="combo_option_tree_view" model="ir.ui.view">
        <field name="name">combo.option.tree</field>
        <field name="model">combo.option</field>
        <field name="arch" type="xml">
            <tree string="Combo Option">
                <field name="combo_name"/>
            </tree>
        </field>
    </record>
    <record id="combo_option_action" model="ir.actions.act_window">
        <field name="name">Combo Option</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">combo.option</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" eval="False"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Define a new Combo Option
          </p>
        </field>
    </record>

    <menuitem id="pos_config_menu_action_combo_option"
        name="Combo Option"
        parent="point_of_sale.pos_config_menu_catalog"
        action="combo_option_action"
        sequence="16"/>
</odoo>