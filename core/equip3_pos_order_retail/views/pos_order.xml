<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="retail_view_pos_pos_form" model="ir.ui.view">
        <field name="name">pos.order.retail.item_state</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lines']/tree/field[@name='price_subtotal_incl']" position="after">
                <field name="item_state" optional="hide"/>
            </xpath>
            <xpath expr="//field[@name='date_order']" position="after">
                <field name="pos_order_day"/>
                <field name="pos_order_hour" widget="float_time"/>
                <field name="hour_group_id"/>
            </xpath>
        </field>
    </record>

    <record id="home_group_view_pos_pos_tree" model="ir.ui.view">
        <field name="name">pos.order.tree.home.group</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_order']" position="after">
                <field name="pos_order_day"/>
                <field name="pos_order_hour" widget="float_time"/>
                <field name="hour_group_id"/>
            </xpath>
        </field>
    </record>

</odoo>