<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    
    <t t-name="ReservationList" owl="1">
        <div class="ticket-button reservation-list" t-on-click="onClick">
            <div class="with-badge" t-att-badge="count">
            </div>
            <div>Reservation List</div>
        </div>
    </t>

    <t t-name="Chrome" t-inherit="point_of_sale.Chrome" t-inherit-mode="extension" owl="1">
        <xpath expr="//KitchenTickets" position="before">
            <ReservationList t-if="env.pos.config.table_reservation_list"/>
        </xpath>
    </t>

    <t t-name="ReservationScreen" owl="1">
        <div class="reservation-screen">
            <button class="btn reserve-order-back" t-on-click="trigger('close-screen')">
                <i class="fa fa-angle-double-left"></i>
                <span> </span>
                <span>Back</span>
            </button>
            <div class="reservation-screen-searchbar">
                <SearchBar class="reservation-search" config="searchBarConfig" placeholder="'Search Reserved Orders...'"/>
                <button t-on-click="clearSearch">
                    <i class="fa fa-refresh"></i>
                </button>
            </div>
            <div class="wrapper">
                <table class='summary-table reservation-list-table-header'>
                    <colgroup>
                        <col width='6%'/>
                        <col width='6%'/>
                        <col width='6%'/>
                        <col width='4%'/>
                        <col width='4%'/>
                        <col width='6%'/>
                        <col width='6%'/>
                        <col width='6%'/>
                        <col width='6%'/>
                        <col width='6%'/>
                    </colgroup>
                    <tr class="reserv-order-line header">
                        <td>
                            Reservation ID
                        </td>
                        <td>
                            Customer Name
                        </td>
                        <td>
                            Phone Number
                        </td>
                        <td>
                            Reservation From
                        </td>
                        <td>
                            Reservation To
                        </td>
                        <td>
                            Table No
                        </td>
                        <td>
                            Floor
                        </td>
                        <td>
                            Seat
                        </td>
                        <td colspan="2">
                            Action
                        </td>
                    </tr>
                </table>
                <table class='summary-table reservation-list-table'>
                    <colgroup>
                        <col width='213px'/>
                        <col width='221px'/>
                        <col width='249px'/>
                        <col width='172px'/>
                        <col width='173px'/>
                        <col width='236px'/>
                        <col width='223px'/>
                        <col width='239px'/>
                        <col width='178px'/>
                        <col width='176px'/>
                    </colgroup>
                    <tbody>
                        <t t-if="searched_reserved_order" t-set="reserved_order" t-value="searched_reserved_order"/>
                        <t t-foreach="reserved_order" t-as="ord">
                            <tr class="receipt-line"
                                t-if="ord.state == 'reserved'"
                                t-attf-class="client-line {{highlight}}"
                                t-att-data-id="ord.id"
                                t-on-click="trigger('click-card', {card: card})">
                                <td>
                                    <t t-if="ord.name" t-esc="ord.name"/>
                                </td>
                                <td>
                                    <t t-if="ord.customer_name" t-esc="ord.customer_name"/>
                                </td>
                                <td>
                                    <t t-if="ord.cust_phone_no" t-esc="ord.cust_phone_no"/>
                                </td>
                                <td>
                                    <t t-if="ord.reservation_from" t-esc="ord.reservation_from"/>
                                </td>
                                <td>
                                    <t t-if="ord.reservation_to" t-esc="ord.reservation_to" />
                                </td>
                                <td>
                                    <t t-if="ord.table_no" t-esc="ord.table_no[1]" />
                                </td>
                                <td>
                                    <t t-if="ord.table_floor" t-esc="ord.table_floor[1]" />
                                </td>
                                <td>
                                    <t t-if="ord.reservation_seat" t-esc="ord.reservation_seat" />
                                </td>
                                <td style="vertical-align:middle;text-align:right;">
                                    <span>
                                        <button class="arrived-button" t-on-click="trigger('click-arrived',{'id':ord.id,'tbl_id':ord.table_no[0]})">Arrived</button>
                                    </span>
                                </td>
                                <td style="vertical-align:middle;text-align:left;">
                                    <span>
                                        <button class="cancel-button" t-on-click="trigger('click-cancel',{'id':ord.id,'tbl_id':ord.table_no[0]})">Cancel</button>
                                    </span>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
