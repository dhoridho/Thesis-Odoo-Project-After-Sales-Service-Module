<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
	<t t-name="PosComboConfigurePopup" owl="1">
        <div role="dialog" class="modal-dialog pos_combo_configure_popup">
            <div class="popup popup-text">
            	<header class="title drag-handle">
                        <t t-esc="props.title" />
                </header>
                <main class="body pos_combo_configure_popuo_cart_item col-lg-12 col-md-12 col-sm-12">
                    <div class="opt-categ-type-container">
                        <input type="radio" id="combo_pos_categ" name="combo_pos_categ" value="appetizer" style="width:5%"/> Appetizer    
                        <input type="radio" id="combo_pos_categ" name="combo_pos_categ" value="main" style="width:5%"/> Main Course
                        <input type="radio" id="combo_pos_categ" name="combo_pos_categ" value="dessert" style="width:5%"/> Dessert
                    </div>
                    <div class="combo-product-container">
                        <t t-foreach="combo_items_ids or []" t-as="item_id" t-key="item_id">
                            <t t-set='productMatch' t-value='get_product(item_id)'/>
                        	<PosComboProductItem t-if='productMatch and props.pos_combo_categ_groups.appetizer.includes(productMatch.pos_categ_id[0])' item_id="item_id" class="combo_type_appetizer" product="productMatch" extra_price="get_extra_product(item_id)"/>
                        	<PosComboProductItem t-if='productMatch and props.pos_combo_categ_groups.main.includes(productMatch.pos_categ_id[0])' item_id="item_id" class="combo_type_main" product="productMatch" extra_price="get_extra_product(item_id)"/>
                        	<PosComboProductItem t-if='productMatch and props.pos_combo_categ_groups.dessert.includes(productMatch.pos_categ_id[0])' item_id="item_id" class="combo_type_dessert" product="productMatch" extra_price="get_extra_product(item_id)"/>
                        </t>   
                    </div>
                </main>
                <footer class="footer ft-btn-container" style="display:none ">
                    <div id="btn-pr-choose" class="button highlight confirm" t-on-click="loadComboOptions">
                        Choose
                    </div>
                    <div id="btn-pr-cancel" class="button cancel" t-on-click="cancel">
                        Cancel
                    </div>
                    <div id="btn-pr-apply" class="button highlight confirm" t-on-click="confirm">
                        Apply
                    </div>
                    <div id="btn-pr-back" class="button cancel" t-on-click="backToOption">
                        Back
                    </div>
                </footer>
            </div>
        </div>
    </t>

    <t t-name="PosComboProductItem" owl="1">
        <article class="product" tabindex="0" t-att-data-extra_price="props.extra_price" t-att-data-product_id="props.product.id" t-on-click="OnSelectComboProduct">
            <i role="img" aria-label="Remove" title="Remove" class="product_remove_button fa fa-trash"
                    t-on-click.stop="onProductRemoveClick()"
            />
            <div class="product-img">
                <img t-att-src="imageUrl" t-att-alt="props.product.display_name" />
            </div>
            <div class="product-name" t-attf-id="article_product_{{props.product.id}}">
                <t t-esc="props.product.display_name" />
            </div>
            <div class="product_price">
            	<span t-esc="price"/> 
            </div>
        </article>
    </t>
</templates>