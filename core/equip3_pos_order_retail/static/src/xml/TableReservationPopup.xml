<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="TableReservationPopup" owl="1">
        <div role="dialog" class="modal-dialog table_rs_poup">
            <Draggable>
                <div class="popup popup-textarea">
                    <header class="title drag-handle">
                        <t t-esc="props.title" />
                    </header>
                    <table class="table_res_main_cl">
                        <tr>
                            <td><span>Customer</span></td>
                            <td><input type="text" t-ref="input-reservation-customer" t-model="state.r_customer"/></td>
                        </tr>
                        <tr>
                            <td><span>Phone Number</span></td>
                            <td><input type="text" name="popup-phone-no"/></td>
                        </tr>
                        <tr>
                            <td><span>Date Reserve</span></td>
                            <!-- <td><span class="date_reserve_cl_main" t-esc="state.r_date || ''"/></td> -->
                            <td><input type="datetime-local" style="width:16rem;"/></td>
                        </tr>
                        <tr>
                            <td><span>Set lock table</span></td>
                            <td><input name="set_lock_tbl" type="datetime-local" style="width:16rem;"/></td>
                        </tr>
                    </table>
                    <footer class="footer">
                        <div class="button cancel" t-on-click="cancel">
                            <t t-esc="props.cancelText" />
                        </div>
                        <div class="button confirm" t-on-click="confirm">
                            <t t-esc="props.confirmText" />
                        </div>
                    </footer>
                </div>
            </Draggable>
        </div>
    </t>
    <t t-name="TableInfoWidget" t-inherit="equip3_pos_general.TableInfoWidget" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[@class='table_popup_cl']" position="inside">
            <t t-if="table.tbl_moved_from">
                <div class="table_in_list">
                    <div class="tab_info_icon ">
                        <i class="fa fa-exchange"/>
                    </div>
                    <div class="tab_info_icon tthm_amount_total">
                        <t t-esc="table.tbl_moved_from[1]"/>
                    </div>
                </div>
            </t>
            <div class="table_in_list">
                <div class="table_seat_no_cl" style="width: 100%;text-align: right;color: #f8433f;">
                    <t t-esc="tablePopInfo.seat_no"/>
                </div>
            </div>
        </xpath>
    </t>
</templates>