<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Sale Customer E-signature-->
    <record id="sale_esignature_tree" model="ir.ui.view">
        <field name="name">sale.esignature.tree</field>
        <field name="model">sale.customer.esignature</field>
        <field name="arch" type="xml">
            <tree string="Sales Customer E-signature">
                <field name="identity_number"/>
                <field name="full_name"/>
                <field name="date_of_birth"/>
                <field name="phone_no"/>
                <field name="email_id"/>
                <field name="selfie_img"/>
                <field name="identity_image"/>
                <field name="country_id"/>
                <field name="account_status"/>
                <field name="reason"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="sale_esignature_form" model="ir.ui.view">
        <field name="name">sale.esignature.form</field>
        <field name="model">sale.customer.esignature</field>
        <field name="arch" type="xml">
            <form string="Sales Order">
                <sheet>
                    <group name="main_grp">
                        <group name="first_grp">
                            <field name="identity_number"/>
                            <field name="full_name"/>
                            <field name="date_of_birth"/>
                            <field name="phone_no"/>
                            <field name="company_id" readonly="1" force_save="1"/>
                        </group>
                        <group name="second_grp">
                            <field name="email_id"/>
                            <field name="selfie_img_name" invisible="1"/>
                            <field name="selfie_img" filename="selfie_img_name"/>
                            <field name="identity_image_name" invisible="1"/>
                            <field name="identity_image" filename="identity_image_name"/>
                            <field name="country_id"/>
                            <field name="account_status" invisible="1"/>
                            <field name="reason"/>
                        </group>
                    </group>
                    <group string="Reason">
                        <field name="privid_message"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_sale_esignature" model="ir.actions.act_window">
        <field name="name">Sale Customer E-signature</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.customer.esignature</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new Sale E-signature, the first step of a new E-signature!
          </p>
        </field>
    </record>

    <menuitem id="menu_sale_esignature"
            name="Signature"
            parent="equip3_sale_masterdata.menu_confi_customer"
            sequence="5"
            action="action_sale_esignature"/>
</odoo>