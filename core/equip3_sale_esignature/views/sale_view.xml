<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sale order form view -->
    <record id="sale_esignature_inherit_sale_form" model="ir.ui.view">
        <field name="name">sale.esignature.inherit.sale.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
             <xpath expr="//page[last()]" position="after">
               <page string="e-signature" attrs="{'invisible': [('customer_esignature', '=', False)]}">
                    <group>
                        <field name="customer_esignature" invisible="1"/>
                        <field name="signature_to_confirm"/>
                        <field name="signature_signed_by" readonly="1"/>
                        <field name="signature_signed_on" readonly="1"/>
                        <field name="attachment_ids" widget="many2many_binary" readonly="1"/>
                    </group>
                </page>
            </xpath>

        </field>
    </record>
</odoo>