<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Partner form view -->
    <record id="sale_esignature_inherit_partner_form" model="ir.ui.view">
        <field name="name">sale.esignature.inherit.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
               <page string="E-Signature" attrs="{'invisible': [('customer_esignature', '=', False)]}">
                    <group>
                        <group>
                            <field name="customer_esignature" invisible="1"/>
                            <field name="identity_number" readonly="1"/>
                            <field name="signature_name" readonly="1"/>
                            <field name="date_of_birth" readonly="1"/>
                            <field name="signature_mobile" readonly="1"/>
                            <field name="signature_status" readonly="1"/>
                        </group>
                        <group>
                            <field name="signature_privy_id" readonly="1" invisible="1"/>
                            <field name="signature_email" readonly="1"/>
                            <field name="selfie_img_name" invisible="1"/>
                            <field name="selfie_img" filename="selfie_img_name" readonly="1"/>
                            <field name="identity_image_name" invisible="1"/>
                            <field name="identity_image" filename="identity_image_name" readonly="1"/>
                            <field name="signature_country_id" readonly="1"/>
                            <field name="signature_reason" readonly="1"/>
                        </group>
                    </group>
                </page>
            </xpath>

        </field>
    </record>
</odoo>