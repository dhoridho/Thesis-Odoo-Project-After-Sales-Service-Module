<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Res Config form view -->
    <record id="sale_esignature_inherit_res_config_setting_form" model="ir.ui.view">
        <field name="name">sale.esignature.inherit.res.config.setting.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='sale_management']" position="inside">
                <h2>E-Signature</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="customer_esignature" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="customer_esignature" />
                            <div class="text-muted">
                                    Request customer signature to confirm orders
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane" attrs="{'invisible': [('customer_esignature','=',False)]}">
                            <label for="privy_url" />
                            <field name="privy_url" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane" attrs="{'invisible': [('customer_esignature','=',False)]}">
                            <label for="privy_username" />
                            <field name="privy_username" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane" attrs="{'invisible': [('customer_esignature','=',False)]}">
                            <label for="privy_password" />
                            <field name="privy_password" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane" attrs="{'invisible': [('customer_esignature','=',False)]}">
                            <label for="privy_merchant_key" />
                            <field name="privy_merchant_key" />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>