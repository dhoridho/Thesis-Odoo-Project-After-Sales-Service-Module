<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="ks_sales_forecast" model="ir.ui.view">
			<field name="name">ks.sales.forecast.inherit.view.tree</field>
			<field name="model">ks.sales.forecast</field>
			<field name="inherit_id" ref="ks_sales_forecast.ks_forecast_tree_view"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='ks_forecast_base']" position="after">
					<field name="company_id"/>
				</xpath>
			</field>
		</record>

		<record id="ks_forecast_form_view_inherit" model="ir.ui.view">
			<field name="name">forecast.form.view</field>
			<field name="model">ks.sales.forecast</field>
			<field name="inherit_id" ref="ks_sales_forecast.ks_forecast_form_view" />
			<field name="arch" type="xml">
				<xpath expr="//form/sheet/group[2]/group/div[last()]" position="after">
					<label for="company_id" string="Company"/>
					<div>
						<field name="company_id" readonly="1"/>
					</div>
            	</xpath>
			</field>
		</record>
		<record model="ir.actions.act_window" id="ks_sales_forecast.ks_forecast_action">
			<field name="domain">[('company_id', '=', allowed_company_ids[0])]</field>
		</record>
	</data>
</odoo>
