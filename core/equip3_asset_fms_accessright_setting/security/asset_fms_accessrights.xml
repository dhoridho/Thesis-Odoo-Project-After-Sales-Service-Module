<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="1">
        <record id="module_category_assets_control" model="ir.module.category">
            <field name="name">Assets Control</field>
            <field name="sequence">1</field>
        </record>

        <record id="module_category_assets" model="ir.module.category">
            <field name="name">Assets</field>
            <field name="parent_id" ref="module_category_assets_control"/>
        </record>

        <record id="group_asset_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_assets"/>
        </record>

        <record id="group_asset_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_assets"/>
            <field name="implied_ids" eval="[(4, ref('group_asset_user'))]"/>
        </record>

        <record id="group_asset_administrator" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="module_category_assets"/>
            <field name="implied_ids" eval="[(4, ref('group_asset_manager'))]"/>
            <!-- <field name="users" eval="[(4, ref('base.user_admin'))]"/> -->
        </record>

        <record id="base.group_public" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('group_asset_administrator'))]"/>
        </record>

    </data>
    <data>
        <record id="model_maintenance_work_order_rule_user" model="ir.rule">
            <field name="name">User MWO Rule</field>
            <field name="model_id" ref="equip3_asset_fms_operation.model_maintenance_work_order"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_asset_user'))]"/>
            <field name="perm_read" eval="True" />
            <field name="perm_create" eval="True" />
            <field name="perm_write" eval="True" />
            <field name="perm_unlink" eval="False" />
        </record>
        <record id="model_maintenance_repair_order_rule_user" model="ir.rule">
            <field name="name">User MRO Rule</field>
            <field name="model_id" ref="equip3_asset_fms_operation.model_maintenance_repair_order"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_asset_user'))]"/>
            <field name="perm_read" eval="True" />
            <field name="perm_create" eval="False" />
            <field name="perm_write" eval="False" />
            <field name="perm_unlink" eval="False" />
        </record>
        <record id="model_maintenance_plan_rule_user" model="ir.rule">
            <field name="name">User Mplan Rule</field>
            <field name="model_id" ref="maintenance_plan.model_maintenance_plan"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_asset_user'))]"/>
            <field name="perm_read" eval="True" />
            <field name="perm_create" eval="True" />
            <field name="perm_write" eval="True" />
            <field name="perm_unlink" eval="False" />
        </record>
        <record id="model_maintenance_request_rule_user" model="ir.rule">
            <field name="name">User MRequest Rule</field>
            <field name="model_id" ref="maintenance.model_maintenance_request"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_asset_user'))]"/>
            <field name="perm_read" eval="True" />
            <field name="perm_create" eval="True" />
            <field name="perm_write" eval="True" />
            <field name="perm_unlink" eval="False" />
        </record>
        <record id="model_asset_stock_take_rule_user" model="ir.rule">
            <field name="name">User Asset Stock Take Rule</field>
            <field name="model_id" ref="equip3_asset_fms_operation.model_asset_stock_take"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_asset_user'))]"/>
            <field name="perm_read" eval="True" />
            <field name="perm_create" eval="True" />
            <field name="perm_write" eval="True" />
            <field name="perm_unlink" eval="False" />
        </record>
        <record id="model_asset_inter_transfer_rule_user" model="ir.rule">
            <field name="name">User Asset Internal Transfer Stock Take Rule</field>
            <field name="model_id" ref="equip3_asset_fms_operation.model_inter_asset_transfer"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_asset_user'))]"/>
            <field name="perm_read" eval="True" />
            <field name="perm_create" eval="True" />
            <field name="perm_write" eval="True" />
            <field name="perm_unlink" eval="False" />
        </record>
        <record id="model_maintenance_equipment_rule_manager" model="ir.rule">
            <field name="name">User Maintenance Equipment Rule</field>
            <field name="model_id" ref="maintenance.model_maintenance_equipment"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_asset_manager')),(4, ref('group_asset_user'))]"/>
            <field name="perm_read" eval="True" />
            <field name="perm_create" eval="False" />
            <field name="perm_write" eval="False" />
            <field name="perm_unlink" eval="False" />
        </record>
    </data>
</odoo>