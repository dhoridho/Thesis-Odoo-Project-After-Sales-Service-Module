<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- maintenance facilities area -->
    <record id="maintenance_facilities_area_inherit_form_view_user" model="ir.ui.view">
        <field name="name">maintenance.facilities.area.accessright.form.view.user</field>
        <field name="model">maintenance.facilities.area</field>
        <field name="inherit_id" ref="equip3_asset_fms_masterdata.facilities_area_view_form"/>
        <field name="groups_id" eval="[(6, 0, [ref('equip3_asset_fms_accessright_setting.group_asset_user')])]"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='%(equip3_asset_fms_masterdata.request_action_link2)d']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='wo_action_link']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='%(equip3_asset_fms_masterdata.plan_action_link2_preventive)d']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='%(equip3_asset_fms_masterdata.plan_action_link2_hourmeter)d']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='%(equip3_asset_fms_masterdata.plan_action_link2_odometer)d']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='%(equip3_asset_fms_masterdata.plan_action_link2_odometer)d']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="maintenance_facilities_area_inherit_form_view_manager" model="ir.ui.view">
        <field name="name">maintenance.facilities.area.accessright.form.view.manager.admin</field>
        <field name="model">maintenance.facilities.area</field>
        <field name="inherit_id" ref="equip3_asset_fms_masterdata.facilities_area_view_form"/>
        <field name="groups_id" eval="[(6, 0, [ref('equip3_asset_fms_accessright_setting.group_asset_manager')]),(6, 0, [ref('equip3_asset_fms_accessright_setting.group_asset_administrator')])]"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='%(equip3_asset_fms_masterdata.request_action_link2)d']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
            <xpath expr="//button[@name='wo_action_link']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
            <xpath expr="//button[@name='%(equip3_asset_fms_masterdata.plan_action_link2_preventive)d']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
            <xpath expr="//button[@name='%(equip3_asset_fms_masterdata.plan_action_link2_hourmeter)d']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
            <xpath expr="//button[@name='%(equip3_asset_fms_masterdata.plan_action_link2_odometer)d']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
            <xpath expr="//button[@name='%(equip3_asset_fms_masterdata.plan_action_link2_odometer)d']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
        </field>
    </record>

</odoo>
