<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- Employee Asset Return form view -->
    <record id="employee_asset_return_accessright_form_view_user" model="ir.ui.view">
        <field name="name">employee.asset.return.accessright.form.view.user</field>
        <field name="model">employee.asset.return</field>
        <field name="inherit_id" ref="equip3_asset_fms_operation.employee_asset_return_view_form"/>
        <field name="groups_id" eval="[(6, 0, [ref('equip3_asset_fms_accessright_setting.group_asset_user')])]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='branch_id']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='due_date']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='description']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='assets_line']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>
            </xpath>
        </field>
    </record>

