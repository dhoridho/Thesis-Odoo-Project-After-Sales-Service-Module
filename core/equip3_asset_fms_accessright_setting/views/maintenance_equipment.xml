<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- maintenance.equipment inherit form view -->
    <record id="maintenance_equip_asset_value_inherit_form_view_user" model="ir.ui.view">
        <field name="name">maintenance.equipment.inherit.view.form.user</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
        <field name="groups_id" eval="[(6, 0, [ref('equip3_asset_fms_accessright_setting.group_asset_user')])]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='owner']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_ref']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='asset_value']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//group[@name='grup3']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='breakdown_action']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[@name='materials']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[@name='tools']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <!-- Asset Moves -->
            <xpath expr="//button[@name='asset_moves_link']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <!-- Asset -->
            <xpath expr="//button[@name='action_account_asset']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <!-- odometer -->
            <xpath expr="//button[@name='%(equip3_asset_fms_masterdata.odometer_action_link)d']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <!-- hourmeter -->
            <xpath expr="//button[@name='%(equip3_asset_fms_masterdata.hm_action_link)d']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <!-- request -->
            <xpath expr="//button[@name='%(equip3_asset_fms_masterdata.request_action_link)d']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <!-- work order -->
            <xpath expr="//button[@name='action_view_workorder_ids']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <!-- repair order -->
            <xpath expr="//button[@name='repair_action_link']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <!-- hourmeter count -->
            <xpath expr="//button[@name='action_view_hourmeter_mp']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <!-- preventitive count -->
            <xpath expr="//button[@name='action_view_preventive_mp']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>


        </field>
    </record>


