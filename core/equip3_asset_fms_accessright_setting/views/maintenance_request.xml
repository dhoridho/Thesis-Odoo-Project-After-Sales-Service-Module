<?xml version='1.0' encoding='utf-8'?>
<odoo>


    <!-- maintenance request inherit form view -->
    <record id="maintenance_request_accessright_form_view_user" model="ir.ui.view">
        <field name="name">maintenance.request.accessright.form.view.user</field>
        <field name="model">maintenance.request</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form"/>
        <field name="groups_id" eval="[(6, 0, [ref('equip3_asset_fms_accessright_setting.group_asset_user')])]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='equipment_id']" position="after">
                <field name="is_read_only" invisible="1"/>
            </xpath>
            <xpath expr="//button[@name='create_work_order_new']" position="attributes">
                <attribute name="groups">equip3_asset_fms_accessright_setting.group_asset_manager, equip3_asset_fms_accessright_setting.group_asset_manager</attribute>
            </xpath>
            <xpath expr="//button[@name='button_progress']" position="attributes">
                <attribute name="groups">equip3_asset_fms_accessright_setting.group_asset_manager, equip3_asset_fms_accessright_setting.group_asset_manager</attribute>
            </xpath>
            <xpath expr="//button[@name='button_done']" position="attributes">
                <attribute name="groups">equip3_asset_fms_accessright_setting.group_asset_manager, equip3_asset_fms_accessright_setting.group_asset_manager</attribute>
            </xpath>
            <xpath expr="//button[@name='button_cancel']" position="attributes">
                <attribute name="groups">equip3_asset_fms_accessright_setting.group_asset_manager, equip3_asset_fms_accessright_setting.group_asset_manager</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_custom_id']" position="attributes">
                <attribute name="attrs">{'readonly': [('is_read_only', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='facility_area']" position="attributes">
                <attribute name="attrs">{'readonly': [('is_read_only', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='equipment_id']" position="attributes">
                <attribute name="attrs">{'readonly': [('is_read_only', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='remarks']" position="attributes">
                <attribute name="attrs">{'readonly': [('is_read_only', '=', True)]}</attribute>
            </xpath>
        </field>
    </record>

    <record id="maintenance_request_accessright_form_view_manager" model="ir.ui.view">
        <field name="name">maintenance.request.accessright.form.view.manager</field>
        <field name="model">maintenance.request</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form"/>
        <field name="groups_id" eval="[(6, 0, [ref('equip3_asset_fms_accessright_setting.group_asset_manager')])]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_custom_id']" position="attributes">
                <attribute name="attrs">{}</attribute>
            </xpath>
            <xpath expr="//field[@name='facility_area']" position="attributes">
                <attribute name="attrs">{}</attribute>
            </xpath>
            <xpath expr="//field[@name='equipment_id']" position="attributes">
                <attribute name="attrs">{}</attribute>
            </xpath>
            <xpath expr="//field[@name='remarks']" position="attributes">
                <attribute name="attrs">{}</attribute>
            </xpath>
        </field>
    </record>
</odoo>