<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- approval.matrix.asset.request tree view -->
        <record id="approval_matrix_employee_request_view_tree" model="ir.ui.view">
            <field name="name">approval.matrix.asset.request.view.tree</field>
            <field name="model">approval.matrix.asset.request</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>                    
                </tree>
            </field>
        </record>

        <!-- approval.matrix.asset.request.line form view -->
        <record id="approval_matrix_employee_request_view_form" model="ir.ui.view">
            <field name="name">approval.matrix.asset.request.view.form</field>
            <field name="model">approval.matrix.asset.request</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="branch_id"/>
                            </group>
                            <group>
                                <field name="company_id"/>
                                <field name="access_type"/>
                                <field name="user_group_id" force_save="1" readonly="1" invisible="1" options="{'no_create': True, 'no_open': True}"/>
                                <field name="group_id" groups="base.group_no_one" force_save="1" readonly="1" options="{'no_create': True, 'no_open': True}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Approval Line">
                                <field name="approval_matrix_maintenance_line">
                                    <tree editable="bottom">
                                        <field name="user_ids_domain" invisible="1"/>
                                        <field name="user_ids" widget="many2many_tags" domain="user_ids_domain" options="{'no_create': True, 'no_open': True}"/>
                                        <field name="minimum_approval"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>

    <!-- approval.matrix.asset.request action window -->
    <record id="employee_request_approval_action" model="ir.actions.act_window">
        <field name="name">Employee Asset Request Approval Matrix</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">approval.matrix.asset.request</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="employee_approval_request_menu_act" name="Employee Asset Request Approval Matrix" parent="equip3_asset_fms_masterdata.menu_approval_matrix" action="employee_request_approval_action" sequence="99"/>
</odoo>