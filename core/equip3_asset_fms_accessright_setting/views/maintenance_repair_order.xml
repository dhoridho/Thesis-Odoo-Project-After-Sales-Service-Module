<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- maintenance repair order inherit form view -->
    <record id="maintenance_repair_order_accessright_form_view_user" model="ir.ui.view">
        <field name="name">maintenance.repair.order.accessright.form.view.user</field>
        <field name="model">maintenance.repair.order</field>
        <field name="inherit_id" ref="equip3_asset_fms_operation.maintenance_repair_order_form_view"/>
        <field name="groups_id" eval="[(6, 0, [ref('equip3_asset_fms_accessright_setting.group_asset_user')])]"/>
