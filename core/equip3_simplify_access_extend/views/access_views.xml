<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="simplify_groups_bits.access_management_form_view_ah" model="ir.ui.view">
            <field name="name">access_management_form_view_ah</field>
            <field name="inherit_id" ref="simplify_access_management.access_management_form_view_ah"/>
            <field name="model">access.management</field>
            <field name="arch" type="xml">
                <xpath expr='//sheet/group/group/field[@name="name"]' position="after">
                           
                </xpath>
            </field>
        </record>

        <record id="inherit_access_management_form_view" model="ir.ui.view">
            <field name="name">inherit_access_management_form_view</field>
            <field name="model">access.management</field>
            <field name="inherit_id" ref="simplify_access_management.access_management_form_view_ah" />
            <field name="arch" type="xml">
                <field name="is_all_users" position="replace">
                </field>
                <field name="user_ids" position="replace">
                </field>
                <field name="create_date" position="replace">
                </field>
                <field name="write_date" position="replace">
                </field>
                <field name="disable_debug_mode" position="after">
                    <field name="create_date"/>
                    <field name="write_date"/>
                </field>
                <xpath expr="//notebook/page[1]" position="before">
                    <page string="APPLY TO">
                        <group>
                            <group string="Groups">
                                <field name="apply_by_group"/>
                                <field name="access_res_group_ids" widget="many2many_tags" options="{'no_create': True}" attrs="{'invisible':[('apply_by_group','=',False)]}"/>
                            </group>
                            <group string="Users">
                                <field name="is_all_users"/>     
                                <field name="user_ids" widget="many2many_tags" options="{'no_create': True}" domain="[('share','=',False)]"/>
                                
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>


    </data>
</odoo>
