<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="assets_frontend" inherit_id="portal.assets_frontend" name="Website Assets">
        <xpath expr="//link[last()]" position="after">
            <link rel="stylesheet" type="text/scss" href="/hm3_remove_websitebar/static/src/scss/style.scss"/>
        </xpath>
    </template>


    <template id="user_dropdown" inherit_id="portal.user_dropdown">
        <xpath expr="//li" position="after">
            <li>
                <a href="/web" class="systembtn" style="background: #09a909;border-radius: 100px !important;padding: 0.45rem 1.35rem;font-size: 0.9375rem;line-height: 1.45;">Go to System</a>
            </li>
        </xpath>
    </template>


</odoo>
