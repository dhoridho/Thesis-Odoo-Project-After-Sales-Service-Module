<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_tax_views_form_inherit" model="ir.ui.view">
        <field name="name">account_tax_view_form_inherit</field>
        <field name="model">account.tax</field>
        <field name="inherit_id" ref="account.view_tax_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='definition']//group" position="before">
                <group name="tax_paid_account" string="Tax Paid">
                    <field name="tax_paid_account"/>
                </group>
            </xpath>
            <xpath expr="//group[@name='advanced_booleans']//field[@name='price_include']" position="after">
                <field name="price_include_total"/>
                <field name="pay_separately"/>
            </xpath>
        </field>
    </record>
</odoo>
