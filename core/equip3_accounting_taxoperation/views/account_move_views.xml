<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tax_extension_invoice_tree_view1" model="ir.ui.view">
        <field name="name">tax.extension.account.tree.view</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <tree editable="top" create="false">
                <field name="partner_id" groups="base.group_user" string="Customer" readonly="1"/>
                <field name="invoice_date" readonly="1" string="Invoice Date"/>
                <button type='object' icon='fa-folder-open' name='open_invoice' context="{'invoice_form':True}"/>
                <field name="name" readonly="1"/>
                <field name="commercial_partner_id" invisible="1"/>
                <field name="ref" invisible="1"/>
                <field name="name" invisible="1"/>
                <field name="journal_id" invisible="1"/>
                <field name="suitable_journal_ids" invisible="1"/>
                <field name="company_id" invisible="1" options="{'no_create': True}"/>
                <field name="state" invisible="1"/>
                <field name="user_id" readonly="1" string="Sales Person"/>
                <field name="invoice_date_due" readonly="1"/>
                <!-- <field name="origin" readonly="1"/> -->
                <field name="amount_total_signed" string="Total" sum="Total"/>
                <field name="amount_residual_signed" string="Amount Due" sum="Amount Due"/>
                <field name="tax_pay_seprately_amount" string="Tax to Pay" sum="Tax to Pay"/>
                <field name="currency_id" invisible="1"/>
                <field name="company_currency_id" invisible="1"/>
                <field name="tax_paid_status" readonly="1"/>
                <field name="tax_payment_date" string="Payment Date"/>
                <field name="file_name" invisible="1"/>
                <field name="payment_proof" widget="binary"/>
                <field name="is_edit_data" invisible="1" />
                
                <button name="action_tax_invoice_open" string="Validate" type="object"  class="oe_highlight"  context="{'tax_pay_menu':True}" attrs="{'invisible':['|',('tax_paid_status','=','paid'),('is_edit_data','=',True)]}"/>
                <button name="button_cancel" string="Cancel" type="object"  class="oe_highlight" attrs="{'invisible':[('tax_paid_status','=','unpaid')]}"/>
            </tree>
            </field>
        </record>


        <record id="tax_extension_bill_invoice_tree_view1" model="ir.ui.view">
        <field name="name">tax.extension.bill.account.tree.view</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <tree editable="top" create="false">
                <field name="partner_id" groups="base.group_user" string="Vendors" readonly="1"/>
                <field name="invoice_date" readonly="1" string="Bill Date"/>
                <button type='object' icon='fa-folder-open' name='open_invoice' context="{'invoice_form':True}"/>
                <field name="name" readonly="1"/>
                <field name="commercial_partner_id" invisible="1"/>
                <field name="ref" invisible="1"/>
                <field name="name" invisible="1"/>
                <field name="journal_id" invisible="1"/>
                <field name="suitable_journal_ids" invisible="1"/>
                <field name="company_id" invisible="1" options="{'no_create': True}"/>
                <field name="state" invisible="1"/>
                <field name="user_id" readonly="1" string="Sales Person"/>
                <field name="invoice_date_due" readonly="1"/>
                <field name="ref" readonly="1" string="Source Document"/>
                <field name="amount_total_signed" string="Total" sum="Total"/>
                <field name="amount_residual_signed" string="Amount Due" sum="Amount Due"/>
                <field name="tax_pay_seprately_amount" string="Tax to Pay" sum="Tax to Pay"/>
                <field name="currency_id" invisible="1"/>
                <field name="company_currency_id" invisible="1"/>
                <field name="tax_paid_status" readonly="1"/>
                <field name="tax_payment_date" string="Payment Date" />
                <field name="file_name" invisible="1"/>
                <field name="payment_proof" widget="binary"/>
                <field name="is_edit_data" invisible="1" />
                <button name="action_bill_tax_invoice_open" string="Validate" type="object"  class="oe_highlight"  context="{'tax_pay_menu':True}" attrs="{'invisible':['|',('tax_paid_status','=','paid'),('is_edit_data','=',True)]}"/>
                <button name="button_cancel" string="Cancel" type="object"  class="oe_highlight" attrs="{'invisible':[('tax_paid_status','=','unpaid')]}"/>
            </tree>
            </field>
        </record>

        <record id="tax_extension_account_form_view" model="ir.ui.view">
            <field name="name">tax.extension.acc.form.view</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[1]/group[@class='oe_subtotal_footer oe_right']/field[@name='amount_total']" position="before">
                    <field name="ppn" invisible="1"/>
                    <field name="pph" invisible="1"/>
                </xpath>
                <xpath expr="//page[@id='other_tab']/group/group" position="inside">
                    <field name="tax_paid_status" readonly="1" force_save="1"/>
                    <field name="tax_payment_move_id" readonly="1" force_save="1"/>
                    <field name="tax_pay_seprately_amount" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='amount_by_group']" position="after">
                    <field name="payment_fields_boolean" invisible="1"/>
                    <field name="payment_proof" attrs="{'invisible':[('payment_fields_boolean','=',False)]}"/>
                    <field name="tax_payment_date"  attrs="{'invisible':[('payment_fields_boolean','=',False)]}"/>
                </xpath>
                <xpath expr="//field[@name='amount_total']" position="before">
                    <field name="ppn" invisible="1"/>
                    <field name="pph" invisible="1"/>
                </xpath>
            </field>
        </record>

        <record id="tax_extension_account_search_view" model="ir.ui.view">
            <field name="name">tax.extension.acc.search.view</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']" position="after">
                    <field name="tax_payment_date" />
                </xpath>
                <xpath expr="//filter[@name='draft']" position="after">
                    <filter name="unpaid_tax" string="Unpaid" domain="[('tax_paid_status','=', 'unpaid')]"/>
                    
                </xpath>
            </field>
        </record>
        <record id="action_invoice_tax_to_pay" model="ir.actions.act_window">
            <field name="name">Customer Tax to Pay</field>
            <field name="res_model">account.move</field>
            <!-- <field name="view_type">form</field> -->
            <field name="view_mode">tree,form</field>
            <field eval="False" name="view_id"/>
            <field name="domain">[('move_type','in',('out_invoice', 'out_refund')),('payment_fields_boolean','=',True)]</field>
            <field name="context">{'move_type':'out_invoice', 'default_payment_fields_boolean':True,
                'search_default_unpaid_tax':1}</field>
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a customer invoice.
              </p><p>
                Odoo's electronic invoicing allows to ease and fasten the
                collection of customer payments. Your customer receives the
                invoice by email and he can pay online and/or import it
                in his own system.
              </p><p>
                The discussions with your customer are automatically displayed at
                the bottom of each invoice.
              </p>
            </field>
        </record>


         <record id="action_invoice_tree1_view1_tax" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="tax_extension_invoice_tree_view1"/>
            <field name="act_window_id" ref="action_invoice_tax_to_pay"/>
        </record>

        <record id="action_invoice_tree1_view2_tax" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account.view_move_form"/>
            <field name="act_window_id" ref="action_invoice_tax_to_pay"/>
        </record>
        <menuitem action="action_invoice_tax_to_pay" id="menu_action_invoice_tax_to_pay"
         parent="account.menu_finance_receivables" sequence="2"/>


         <record id="action_bill_invoice_tax_to_pay" model="ir.actions.act_window">
            <field name="name">Bill Tax to Pay</field>
            <field name="res_model">account.move</field>
            <!-- <field name="view_type">form</field> -->
            <field name="view_mode">tree,form</field>
            <field eval="False" name="view_id"/>
            <field name="domain">[('move_type','in',('in_invoice', 'in_refund')),('payment_fields_boolean','=',True)]</field>
            <field name="context">{'move_type':'in_invoice', 'default_payment_fields_boolean':True,
                'search_default_unpaid_tax':1}</field>
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a Bill Tax to Pay.
              </p>
            </field>
        </record>

        <record id="action_bill_invoice_tree1_view1_tax" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="tax_extension_bill_invoice_tree_view1"/>
            <field name="act_window_id" ref="action_bill_invoice_tax_to_pay"/>
        </record>

        <record id="action_bill_invoice_tree1_view2_tax" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account.view_move_form"/>
            <field name="act_window_id" ref="action_bill_invoice_tax_to_pay"/>
        </record>
        <menuitem action="action_bill_invoice_tax_to_pay" id="menu_action_bill_invoice_tax_to_pay"
         parent="account.menu_finance_payables" sequence="4"/>


        


</odoo>
