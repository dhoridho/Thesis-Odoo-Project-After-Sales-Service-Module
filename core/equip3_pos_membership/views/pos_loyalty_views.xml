<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <menuitem id="menu_loyalty"
              name="Membership"
              parent="point_of_sale.menu_point_root"
              sequence="17"/>

    <!-- Membership -->
    <record id="equip3_pos_membership.menu_loyalty" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-parent-pos-loyalities</field>
    </record>


    <record id="pos_loyalty_category_form" model="ir.ui.view">
        <field name="name">pos.loyalty.category.form</field>
        <field name="model">pos.loyalty.category</field>
        <field name="arch" type="xml">
            <form string="Loyalty Category">
                <sheet>
                    <group>
                        <group class="member_card_group">
                            <field name="name"/>

                            <label for="member_card" class="label_member_card"/>
                            <div class="field_member_card">
                                <div class="o_row_file oe_edit_only">
                                    <field name="card_template_barcode"  invisible="1"/>
                                    <field name="card_template_qrcode" invisible="1"/>
                                    <field name="card_template_barcode" 
                                        filename="card_template_barcode_name"
                                        title="Image size: 953 x 615 px" 
                                        attrs="{'invisible': [('member_card','!=','barcode')]}"/>
                                    <field name="card_template_qrcode" 
                                        filename="card_template_qrcode_name" 
                                        title="Image size: 1032 x 578 px" 
                                        attrs="{'invisible': [('member_card','!=','qrcode')]}"/>
                                </div>
                                <div class="o_row_radio oe_edit_only">
                                    <field name="member_card" widget="radio" required="1"/> 
                                </div>
                                <div class="o_row_preview oe_read_only">
                                    <field name="member_card_preview" widget="equip3_member_card_preview"/>
                                </div>
                            </div>
                             
                        </group>
                        <group>
                            <field name="from_point"/>
                            <field name="to_point"/>
                            <field name="active"/>
                            <field name="company_id"/>
             
                            <!-- <field name="coefficient" string="Redeem Coefficient"/> -->
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pos_loyalty_category_tree" model="ir.ui.view">
        <field name="name">pos.loyalty.category.tree</field>
        <field name="model">pos.loyalty.category</field>
        <field name="arch" type="xml">
            <tree string="Loyalties Category">
                <field name="name"/>
                <field name="from_point"/>
                <field name="to_point"/>
                <field name="active"/>
                <field name="company_id" optional="show"/>
        
                <!-- <field name="coefficient" optional="hide"/> -->
            </tree>
        </field>
    </record>

    <record id="pos_loyalty_category_search" model="ir.ui.view">
        <field name="name">pos.loyalty.category.filter</field>
        <field name="model">pos.loyalty.category</field>
        <field name="arch" type="xml">
            <search string="Loyalty filter">
                <field name="name"/>
                <field name="code"/>
            </search>
        </field>
    </record>
 

    <record id="pos_loyalty_from" model="ir.ui.view">
        <field name="name">pos.loyalty.form</field>
        <field name="model">pos.loyalty</field>
        <field name="arch" type="xml">
            <form string="Loyalties">
                <header>
                    <field name="state" widget="statusbar" clickable="true"/>
                    <!-- <button name="active_all_pos" string="Active all pos" type="object"
                            groups="point_of_sale.group_pos_manager" class="btn-primary"/> -->
              <!--       <button name="action_applied_to_selected_pos" 
                        string="Applied to selected pos" 
                        type="object"
                        groups="point_of_sale.group_pos_manager" 
                        class="btn-primary oe_read_only"/> -->
                </header>
                <sheet>
                    <h1>
                        <a type="open">
                            <field name="name"/>
                        </a>
                    </h1>
                    <group>
                        <group>
                            <field name="product_loyalty_id" domain="[('default_code','=','Rs')]"/>
                            <field name="start_date" required="1"/>
                            <field name="end_date"/>
                            <field name="company_id" />
                  
                        </group>
                        <group>
                            <field name="type" required="1"/>
                            <field name="pos_config_ids" options='{"no_open": True, "no_create": True}' string="Selected POS" widget="many2many_tags"/>
                            <field name="rounding_down" invisible="1"/>
                            <field name="rounding" attrs="{'invisible': [('rounding_down', '=', True)]}" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Loyalty Rules" attrs="{'invisible': [('type','!=','plus point')]}">
                            <field name="rule_ids" nolabel="1">
                                <tree string="Rule">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="type"/>
                                    <field name="pos_loyalty_category_ids" widget="many2many_tags"/>
                                    <field name="coefficient"/>
                                    <field name="min_amount"/>
                                </tree>
                                <form string="Loyalty Rules">
                                    <sheet>
                                        <div class="oe_title">
                                            <label for="name" class="oe_edit_only"/>
                                            <h1>
                                                <field name="name" class="oe_inline"/>
                                            </h1>
                                        </div>
                                        <group>
                                            <group>
                                                <field name="type"/>
                                                <field name="pos_loyalty_category_ids" widget="many2many_tags" required="1"/>
                                                <field name="is_expired_period" string="Expired Period"/>
                                                <div attrs="{'invisible': [('is_expired_period', '=', False)]}">
                                                    <field name="expired_period_value" class="oe_inline" attrs="{'required': [('is_expired_period', '=', True)]}"/>
                                                    <field name="expired_period" attrs="{'required': [('is_expired_period', '=', True)]}" class="oe_inline" style="margin-left: 15px;"/>
                                                </div>
                                            </group>
                                            <group>
                                                <field name="coefficient"/>
                                                <field name="coefficient_note" nolabel="1"/>
                                                <field name="min_amount"/>
                                                <!-- <field name="is_multi"/> -->
                                                <field name="calc_point_without_point_as_payment" 
                                                    attrs="{'invisible': [('type','!=','order_amount')]}"/>
                                            </group>
                                        </group>
                                        <group>
                                            <field name="product_ids" colspan="4" attrs="{'required': [('type', '=', 'products')], 'invisible': [('type', '!=', 'products')]}" options='{"no_open": True, "no_create": True}' context="{'tree_view_ref': 'equip3_pos_membership.membership_product_product_tree_view'}">
                                                <tree>
                                                    <field name="default_code"/>
                                                    <field name="name"/>
                                                    <field name="list_price"/>
                                                    <field name="uom_id"/>
                                                    <field name="sh_qr_code"/>
                                                </tree>
                                            </field>
                                            <field name="category_ids" colspan="4"
                                                   attrs="{'required': [('type', '=', 'categories')], 'invisible': [('type', '!=', 'categories')]}"/>
                                            <field name="categories" invisible="1"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                        <page string="Rewards Redeem Rules" attrs="{'invisible': [('type','!=','redeem')]}">
                            <field name="reward_redeem_ids" nolabel="1" context="{
                                    'default_type': 'use_point_payment'
                                }">
                                <tree string="Rewards">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="type"/>
                                    <field name="coefficient" invisible="1"/>
                                    <field name="pos_loyalty_category_ids" widget="many2many_tags"/>
                                    <field name="min_amount"/>
                                </tree>
                                <form string="Reward">
                                    <sheet>
                                        <div class="oe_title">
                                            <label for="name" class="oe_edit_only" string="Name of Rule"/>
                                            <h1>
                                                <field name="name" class="oe_inline"/>
                                            </h1>
                                        </div>
                                        <group>
                                            <group>
                                                <field name="type" 
                                                    widget="equip3_custom_selection"
                                                    options="{
                                                        'custom_selection': ['discount_products', 'discount_categories','resale','use_point_payment']
                                                    }"
                                                />
                                                <field name="pos_loyalty_category_ids" widget="many2many_tags" required="1"/>
                                            </group>
                                            <group>
                                                <field name="min_amount"/>
                                                <field name="redeem_coefficient" attrs="{'invisible': [('type','!=','use_point_payment')]}"/>
                                                <field name="coefficient_note" nolabel="1" invisible="1"/>
                                            </group>
                                        </group>
                                        <group>
                                            <field name="coefficient"
                                                    invisible="1"
                                                    attrs="{'invisible': [('type', 'not in', ['discount_products', 'discount_categories', 'use_point_payment', 'gift', 'resale'])], 'required': [('type', 'in', ['discount_products', 'discount_categories', 'use_point_payment', 'gift', 'resale'])]}"/>
                                            <field name="discount"
                                                   attrs="{'invisible': [('type', 'not in', ['discount_products', 'discount_categories'])], 'required': [('type', 'in', ['discount_products', 'discount_categories'])]}"/>
                                            <field name="price_resale"
                                                   attrs="{'invisible': [('type', '!=', 'resale')], 'required': [('type', '=', 'resale')]}"/>
                                            <field name="gift_product_ids"
                                                   attrs="{'invisible': [('type', '!=', 'gift')], 'required': [('type', '=', 'gift')]}"/>
                                            <field name="discount_product_ids"
                                                   attrs="{'invisible': [('type', '!=', 'discount_products')], 'required': [('type', '=', 'discount_products')]}" context="{'tree_view_ref': 'equip3_pos_membership.membership_product_product_tree_view'}">
                                                <tree>
                                                    <field name="default_code"/>
                                                    <field name="name"/>
                                                    <field name="list_price"/>
                                                    <field name="uom_id"/>
                                                    <field name="sh_qr_code"/>
                                                </tree>
                                            </field>
                                            <field name="discount_child_category_ids" widget="many2many_tags" invisible="1"/>
                                            <field name="discount_category_ids"
                                                   attrs="{'invisible': [('type', '!=', 'discount_categories')], 'required': [('type', '=', 'discount_categories')]}"/>
                                            <field name="resale_product_ids"
                                                   attrs="{'invisible': [('type', '!=', 'resale')], 'required': [('type', '=', 'resale')]}"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                        <page string="Product Redeem Rules" attrs="{'invisible': [('type','!=','redeem')]}">
                            <field name="count_product_redeem" class="oe_hidden"/>
                            <!-- <field name="count_product_redeem" widget="equip3_count_product_redeem" class="oe_hidden"/> -->
                            <field name="product_redeem_ids" nolabel="1" context="{
                                    'default_type': 'gift'
                                }">
                                <tree string="Rewards">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="type" invisible="1"/>
                                    <field name="coefficient" invisible="1"/>
                                    <field name="min_amount"/>
                                </tree>
                                <form string="Reward">
                                    <sheet>
                                        <div class="oe_title">
                                            <label for="name" class="oe_edit_only" string="Name of Rule"/>
                                            <h1>
                                                <field name="name" class="oe_inline"/>
                                            </h1>
                                        </div>
                                        <group>
                                            <group>
                                                <field name="type" invisible="1"/>
                                                <field name="coefficient"
                                                    invisible="1"
                                                   attrs="{'invisible': [('type', 'not in', ['discount_products', 'discount_categories', 'use_point_payment', 'gift', 'resale'])], 'required': [('type', 'in', ['discount_products', 'discount_categories', 'use_point_payment', 'gift', 'resale'])]}"/>
                                                <field name="coefficient_note" nolabel="1" invisible="1"/>
                                            </group>
                                            <group>
                                                <field name="min_amount"/>
                                            </group>
                                        </group>
                                        <group>
                                            <field name="gift_product_rule_ids"
                                                attrs="{'invisible': [('type','!=','gift')], 'required': [('type','=','gift')]}">
                                                <tree editable="bottom">
                                                    <field name="gift_reward_id" invisible="1"/>
                                                    <field name="default_code"/>
                                                    <field name="product_id" required="1" 
                                                        context="{
                                                            'tree_view_ref': 'equip3_pos_membership.membership_product_product_tree_view',
                                                            'search_view_ref': 'equip3_pos_membership.membership_product_product_search'
                                                        }"
                                                        domain="[('is_gift_product','=',True)]"
                                                        options='{"no_open": True, "no_create": True}'/>
                                                    <field name="list_price"/> 
                                                    <field name="uom_id"/>
                                                    <field name="sh_qr_code"/>
                                                    <field name="redeem_point"/>
                                                </tree>
                                            </field>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pos_loyalty_tree" model="ir.ui.view">
        <field name="name">pos.loyalty.tree</field>
        <field name="model">pos.loyalty</field>
        <field name="arch" type="xml">
            <tree string="Loyalties">
                <field name="name"/>
                <field name="start_date" optional="show"/>
                <field name="end_date" optional="show"/>
                <field name="pos_config_ids" optional="show" string="Selected POS" widget="many2many_tags"/>
                <field name="company_id" optional="show"/>
       
                <field name="state" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="pos_loyalty_search" model="ir.ui.view">
        <field name="name">pos.loyalty.filter</field>
        <field name="model">pos.loyalty</field>
        <field name="arch" type="xml">
            <search string="Loyalties">
                <field name="name"/>
                <field name="state"/>
                <group expand="0" string="Group By">
                    <filter string="State" name="groupby_state" domain="[]" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="pos_loyalty_rule_tree" model="ir.ui.view">
        <field name="name">pos.loyalty.rule.tree</field>
        <field name="model">pos.loyalty.rule</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <tree string="Loyalties Rule">
                <field name="name"/>
                <field name="loyalty_id"/>
                <field name="type"/>
                <field name="coefficient"/>
                <field name="min_amount"/>
                <field name="state"/>
            </tree>
        </field>
    </record> 


    <record id="pos_loyalty_point_tree" model="ir.ui.view">
        <field name="name">pos.loyalty.point.tree</field>
        <field name="model">pos.loyalty.point</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <tree string="Loyalty Points" create="false" edit="false" delete="false" default_order="end_date asc">
                <field name="partner_id"/>
                <field name="member_type_code" optional="hide"/>
                <field name="member_type"/>
                <field name="member_phone"/>
                <field name="point"/>
                <field name="point_no_rounding" optional="hide"/>
                <field name="order_id" optional="hide"/>
                <field name="type" optional="show"/>
                <field name="remaining_point" optional="show"/>
                <field name="product_redeemed_ids" widget="many2many_tags" optional="hide"/>
                <field name="end_date"/>
                <field name="company_id" optional="show"  readonly="1"/>
                <field name="branch_id" optional="show"  readonly="1"/>
            </tree>
        </field>
    </record>

    <record id="pos_loyalty_point_form" model="ir.ui.view">
        <field name="name">pos.loyalty.point.form</field>
        <field name="model">pos.loyalty.point</field>
        <field name="arch" type="xml">
            <form string="Loyalty Point" create="false" edit="false" delete="false">
                <header></header>
                <sheet>
                    <div class="oe_title">
                        <label for="loyalty_id" class="oe_edit_only"/>
                        <h1><field name="loyalty_id" class="oe_inline"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" context="{'form_view_ref': 'equip3_pos_membership.equip3_pos_membership_member_form_view'}"/>
                            <field name="member_type_code"/>
                            <field name="member_type"/>
                            <field name="member_phone"/>
                            <field name="point"/>
                            <field name="point_no_rounding"/>
                            <field name="remaining_point" attrs="{'invisible': [('type', '!=', 'plus')]}"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="order_id"/>
                            <field name="type"/>
                            <field name="member_point"/>
                            <field name="redeemed_point"/>
                            <field name="company_id" readonly="1"/>
                            <field name="branch_id"  readonly="1"/>
                            <field name="create_date"/>
                            <field name="end_date" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pos_loyalty_point_search" model="ir.ui.view">
        <field name="name">pos.loyalty.point.filter</field>
        <field name="model">pos.loyalty.point</field>
        <field name="arch" type="xml">
            <search string="Loyalty Points Filter">
                <field name="partner_id"/>
                <field name="member_type_code"/>
                <field name="member_type"/> 
                <field name="member_phone"/>
                <field name="point"/>
                <field name="state"/>
                <field name="type"/>
                <group expand="0" string="Group By">
                    <filter string="Member" name="groupby_partner" domain="[]"
                            context="{'group_by': 'partner_id'}"/>
                    <filter string="Type" name="groupby_type" domain="[]" context="{'group_by': 'type'}"/>
                    <filter string="State" name="groupby_state" domain="[]" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="equip3_pos_membership_type_action">
        <field name="name">Member Type</field>
        <field name="res_model">pos.loyalty.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="equip3_pos_membership_type_menu"
        action="equip3_pos_membership_type_action"
        parent="menu_loyalty"
        sequence="45"
        groups="equip3_pos_masterdata.group_pos_supervisor,equip3_pos_masterdata.group_pos_manager,equip3_pos_masterdata.group_pos_staff,equip3_pos_masterdata.group_pos_cashier,equip3_pos_masterdata.group_pos_waiter"/>

    <record model="ir.actions.act_window" id="equip3_pos_membership_points_action">
        <field name="name">Member Points</field>
        <field name="res_model">pos.loyalty.point</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'group_by': 'partner_id'}</field>
    </record>

    <menuitem id="equip3_pos_membership_points_menu"
        action="equip3_pos_membership_points_action"
        parent="menu_loyalty"
        sequence="50"
        groups="equip3_pos_masterdata.group_pos_supervisor,equip3_pos_masterdata.group_pos_manager,equip3_pos_masterdata.group_pos_staff,equip3_pos_masterdata.group_pos_cashier,equip3_pos_masterdata.group_pos_waiter"
    />


    <record model="ir.actions.act_window" id="equip3_pos_membership_program_action">
        <field name="name">Loyalty Programs</field>
        <field name="res_model">pos.loyalty</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_groupby_state': 1}</field>
    </record>

    <menuitem id="equip3_pos_membership_program_menu"
        action="equip3_pos_membership_program_action"
        parent="menu_loyalty"
        sequence="55"
        groups="equip3_pos_masterdata.group_pos_supervisor,equip3_pos_masterdata.group_pos_manager,equip3_pos_masterdata.group_pos_staff,equip3_pos_masterdata.group_pos_cashier,equip3_pos_masterdata.group_pos_waiter"/>





    <record id="pos_loyalty_update_point_form" model="ir.ui.view">
        <field name="name">pos.loyalty.update.point.form</field>
        <field name="model">pos.loyalty.update.point</field>
        <field name="arch" type="xml">
            <form string="Loyalty Update Point" delete="0">
                <header>
                    <button name="act_confirm" type="object"
                            string="Confirm" class="oe_highlight" groups="base.group_no_one"
                            states="draft"/>
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" class="oe_inline" readonly="1" force_save="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="type_apply" attrs="{'readonly': [('state','=','confirmed')]}"/>
                            <field name="member_id" options="{'no_create':1}" attrs="{'readonly': [('state','=','confirmed')]}" domain="[('is_pos_member','=',True)]"/>
                            <field name="is_orders" attrs="{'readonly': [('state','=','confirmed')]}"/>
                            <field name="pos_order_ids" widget="many2many_tags" attrs="{'readonly': [('state','=','confirmed')],'required': [('is_orders','=',True)],'invisible': [('is_orders','=',False)]}" domain="[('partner_id','=',member_id)]" options="{'no_create':1}"/>

                        </group>
                        <group>
                            <field name="total_orders" readonly="1" force_save="1"/>
                            <field name="current_point" readonly="1" force_save="1"/>
                            <field name="reward_point" attrs="{'readonly': ['|',('state','=','confirmed'),('is_editable_point','=',False)]}" force_save="1"/>
                            <field name="total_point" readonly="1" force_save="1"/>
                            <field name="is_editable_point" invisible="1" />
                        </group>
                    </group>
                    <group string="Update History">
                        <field name="history_ids" readonly="1" force_save="1" nolabel="1">
                            <tree editable="bottom">
                                <field name="pos_order_ids" widget="many2many_tags" />
                                <field name="type_apply" />
                                <field name="total_orders" />
                                <field name="total_point" />
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="pos_loyalty_update_point_tree" model="ir.ui.view">
        <field name="name">pos.loyalty.update.point.tree</field>
        <field name="model">pos.loyalty.update.point</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <tree delete="0">
                <field name="name"/>
                <field name="member_id"/>
                <field name="pos_order_ids" widget="many2many_tags"/>
                <field name="type_apply"/>
                <field name="reward_point"/>
                <field name="total_orders"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="pos_loyalty_update_point_act">
        <field name="name">Update Member Point</field>
        <field name="res_model">pos.loyalty.update.point</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <menuitem id="pos_loyalty_update_point_menu"
        action="pos_loyalty_update_point_act"
        parent="menu_loyalty"
        sequence="56"
        groups="equip3_pos_masterdata.group_pos_supervisor,equip3_pos_masterdata.group_pos_manager,equip3_pos_masterdata.group_pos_staff,equip3_pos_masterdata.group_pos_cashier,equip3_pos_masterdata.group_pos_waiter"/>




 
</odoo>
