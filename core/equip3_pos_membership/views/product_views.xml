<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="product_template_form_view_retail_inherit" model="ir.ui.view">
        <field name="name">product.template.form.view.retail.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="equip3_pos_masterdata.equip3_pos_masterdata_product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='cross_selling']" position="after">
                <field name="is_gift_product"/>
            </xpath>
        </field>
    </record>

    <record id="membership_product_product_tree_view" model="ir.ui.view">
        <field name="name">membership.product.product.tree.view</field>
        <field name="model">product.product</field>
        <field name="priority">5005</field>
        <field name="arch" type="xml">
            <tree>
	            <field name="default_code"/>
	            <field name="name"/>
	            <field name="list_price"/>
	            <field name="uom_id"/>
	            <field name="sh_qr_code"/>
            </tree>
        </field>
    </record>

    <record id="membership_product_product_search" model="ir.ui.view">
        <field name="name">membership.product.product.search</field>
        <field name="model">product.product</field>
        <field name="priority">5005</field>
        <field name="arch" type="xml">
            <search>
                <filter name="filter_available_in_pos" string="Available in POS"
                        domain="[('available_in_pos', '=', True)]"/>
                <filter name="filter_is_gift_product" string="Is Gift Product"
                        domain="[('is_gift_product', '=', True)]"/>
            </search>
        </field>
    </record>
    
</odoo>