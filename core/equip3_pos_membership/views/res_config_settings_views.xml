<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='pricing_setting_container']" position="after">
                <div class="app_settings_block" name="pos_membership_setting_container">
				    <h2>Membership</h2>
				    <div class="row mt16 o_settings_container">
					    <div class="col-xs-12 col-md-6 o_setting_box">
					    	<div class="clearfix mb16">
					    		<label for="allow_create_member_in_pos_screen"/>
						        <div class="text-muted"></div>
						        <div class="mt4">
						            <field name="allow_create_member_in_pos_screen"/>
						        </div>
						    </div>

							<div class="clearfix mb16">
					    		<label for="pkp_customer"/>
						        <div class="text-muted"></div>
						        <div class="mt4">
						            <field name="pkp_customer"/>
						        </div>
						    </div>
					    </div>

					    <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="membership_pluspoint_rounding"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="membership_pluspoint_rounding"/>
                                <div class="text-muted">Define the rounding for plus point loyalty program</div>
                                <label for="membership_pluspoint_rounding_type" string="Rounding Method" 
                                	attrs="{'invisible': [('membership_pluspoint_rounding', '=', False)]}"/>
                                <div attrs="{'invisible': [('membership_pluspoint_rounding', '=', False)]}">
                                    <field name="membership_pluspoint_rounding_type" nolabel="1"  attrs="{'required': [('membership_pluspoint_rounding', '=', True)]}" />
                                    <field name="membership_pluspoint_rounding_multiplier" nolabel="1" attrs="{'required': [('membership_pluspoint_rounding', '=', True)]}"/>
                                </div>
                            </div>
                        </div>
					</div>
				</div>
            </xpath>
            <xpath expr="//div[@data-key='point_of_sale']/div[hasclass('o_settings_container')][3]" position="inside">
                <div class="col-12 col-lg-6 o_setting_box o_setting_box__is_pos_use_deposit">
                    <div class="o_setting_left_pane">
                        <field name="is_pos_use_deposit"/> 
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="is_pos_use_deposit"/>
                        <div class="text-muted">
                            Activate use deposit button on Payment Screen 
                        </div>
                    </div>
                </div>
            </xpath> 
        </field>
    </record>
</odoo>