<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
 
    <record id="pos_generate_efaktur_form" model="ir.ui.view">
        <field name="name">pos.generate.efaktur.form</field>
        <field name="model">pos.generate.efaktur</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_generate" id="action_generate" string="Generate" class="btn-primary" type="object" attrs="{'invisible': ['|',('create_date','=',False), ('state','!=','draft')]}"/>
                    
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <field name="create_date" invisible="1"/>
                    
                    <div class="oe_button_box" name="button_box"> </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="other_name"/>
                            <field name="start_date" required="1" attrs="{'readonly': [('state','!=','draft')]}"/>
                            <field name="end_date" required="1" attrs="{'readonly': [('state','!=','draft')]}"/>
                            <field name="company_id"/>
                            <field name="branch_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Invoice" attrs="{'invisible':[('create_date','=',False)]}">
                            <group>
                                <field name="invoice_ids" nolabel="1" readonly="1">
                                    <tree>
                                        <field name="account_move_id"/>
                                        <field name="partner_id"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="Digunggung" attrs="{'invisible':[('create_date','=',False)]}">
                            <group>
                                <field name="digunggung_ids" nolabel="1" readonly="1">
                                    <tree>
                                        <field name="partner_id"/>
                                        <field name="no_of_invoice"/>
                                        <field name="amount_total"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="Gabungan" attrs="{'invisible':[('create_date','=',False)]}">
                            <group>
                                <field name="gabungan_ids" nolabel="1" readonly="1">
                                    <tree>
                                        <field name="partner_id"/>
                                        <field name="no_of_invoice"/>
                                        <field name="amount_total"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="Others" attrs="{'invisible':[('create_date','=',False)]}">
                            <group>
                                <field name="other_ids" nolabel="1" readonly="1">
                                    <tree>
                                        <field name="account_move_id"/>
                                        <field name="partner_id"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pos_generate_efaktur_tree" model="ir.ui.view">
        <field name="name">pos.generate.efaktur.tree</field>
        <field name="model">pos.generate.efaktur</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="company_id"/>
                <field name="branch_id"/>
                <field name="state"/>

            </tree>
        </field>
    </record>

    <record id="pos_generate_efaktur_search" model="ir.ui.view">
        <field name="name">pos.generate.efaktur.filter</field>
        <field name="model">pos.generate.efaktur</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="pos_generate_efaktur_action">
        <field name="name">Generate E-Faktur</field>
        <field name="res_model">pos.generate.efaktur</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem 
        id="pos_generate_efaktur_menu"
        name="Generate E-Faktur"
        action="pos_generate_efaktur_action"
        parent="equip3_pos_membership.pos_invoice_menu_root"
        sequence="16"/>

</odoo>
