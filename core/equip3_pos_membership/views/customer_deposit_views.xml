<?xml version="1.0" encoding="UTF-8"?>
<odoo>

     <record id="pos_member_deposit_view_form" model="ir.ui.view">
        <field name="name">pos.member.deposit.view.form</field>
        <field name="model">customer.deposit</field>
        <field name="priority">5002</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Receive Deposit" type="object" name="customer_deposit_post" class="btn btn-primary" states="draft" context="{'deposit_active_id' : active_id, 'receive_deposit': True}" attrs="{'invisible': ['|', ('is_customer_deposit_approval_matrix', '!=', False)]}"/>
                    <button string="Convert to Revenue" type="object" name="convert_revenue" states="post" class="btn btn-primary"/>
                    <button string="Reconcile with Invoice" type="action" name="%(equip3_accounting_deposit.action_account_deposit_reconcile)d" states="post" class="btn btn-primary"/>
                    <button string="Return Deposit" type="action" name="%(equip3_accounting_deposit.action_account_deposit_return)d" states="post" />
                    <button string="Cancel" type="object" class="btn btn-primary" name="button_cancel_customer_deposit" attrs="{'invisible': ['|', ('is_show_cancel', '=', False), ('state', '!=', 'post')]}"/>
                    <button string="Set to Draft" type="object" class="btn btn-primary" name="button_draft_customer_deposit" states="canceled"/>
                    <button name="action_approve" string="Approve" type="object" class="oe_highlight" attrs="{'invisible': ['|', '|', ('is_customer_deposit_approval_matrix', '=', False), ('is_approve_button', '=', False), ('state', '!=', 'to_approve')]}"/>
                    <button name="action_reject" string="Reject" type="object" class="oe_highlight" attrs="{'invisible': ['|', '|', ('is_customer_deposit_approval_matrix', '=', False), ('is_approve_button', '=', False), ('state', '!=', 'to_approve')]}"/>          
                    <button name="action_request_for_approval" string="Request For Approval" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('is_customer_deposit_approval_matrix', '=', False), ('state', 'not in', 'draft')]}"/>
                    <button string="Add Deposit" type="object" name="action_add_amount_deposit" states="post" class="btn btn-primary" context="{'form_view_ref': False, 'tree_view_ref': False}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,post,returned,converted,reconciled,cancelled" attrs="{'invisible': [('is_customer_deposit_approval_matrix', '=', True)]}"/>
                    <field name="state1" widget="statusbar" statusbar_visible="draft,to_approve,post,returned,converted,reconciled" attrs="{'invisible': ['|', ('is_customer_deposit_approval_matrix', '=', False), ('state', '=', 'rejected')]}"/>
                    <field name="state2" widget="statusbar" statusbar_visible="draft,to_approve,rejected" attrs="{'invisible': ['|', ('is_customer_deposit_approval_matrix', '=', False), ('state', '!=', 'rejected')]}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- deposit_count -->
                        <button type="object"  name="action_add_amount_deposit"
                            class="oe_stat_button"
                            icon="o-hm-smart-all-invoices" attrs="{'invisible':['|', ('deposit_count', '=', 0), ('state', '=', 'draft')]}">
                            <field name="deposit_count" widget="statinfo" string="Approval"/>
                        </button>
                        <button type="object"  name="action_view_invoice"
                            class="oe_stat_button"
                            icon="o-hm-smart-all-invoices" attrs="{'invisible':['|', ('invoice_count', '=', 0), ('state', '=', 'draft')]}">
                            <field name="invoice_count" widget="statinfo" string="Invoices"/>
                        </button>
                        <button type="object"  name="action_view_reconcile"
                            class="oe_stat_button"
                            icon="o-hm-smart-all-reconciles" attrs="{'invisible':['|', ('invoice_count', '=', 0), ('state', '=', 'draft')]}">
                            <field name="reconcile_count" widget="statinfo" string="Reconciles"/>
                        </button>
                    </div>
                    <div class="oe_title" attrs="{'invisible': [('state', '=', 'draft')]}">
                        <h1><field name="name" attrs="{'readonly': [('state', '!=', 'draft')]}"/></h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="is_deposit" invisible="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="is_from_pos" invisible="1"/>
                            <field name="partner_id" required="1" 
                                string="Member" 
                                domain="[('is_pos_member','=',True)]"
                                attrs="{
                                    'readonly': [('state', '!=', 'draft')],
                                    'invisible': [('is_from_pos', '=', False)]
                                }"/>


                            <field name="company_id" force_save="1" readonly="1"/>
                            <field name="branch_id" force_save="1" readonly="1"/>
                            <field name="branch_id" required="1" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="request_partner_id" invisible="1"/>
                            <field name="amount" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="remaining_amount" readonly="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="communication" string="Reference" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="deposit_move_id" attrs="{'readonly': True, 'required': False}"/>
                            <field name="return_deposit" attrs="{'readonly': [('state', '!=', 'draft')]}" readonly="1"/>
                            <field name="create_uid" attrs="{'readonly': [('state', '!=', 'draft')]}" string="Created By" readonly="1"/>
                            <field name="create_date" attrs="{'readonly': [('state', '!=', 'draft')]}" string="Created Date" readonly="1"/>
                            <field name="is_show_cancel" invisible="1"/>
                            <field name="invoice_deposit_ids" invisible="1"/>
                            <field name="reconcile_deposit_ids" invisible="1"/>
                            <!-- <field name="state" invisible="1"/> -->
                        </group>
                        <group>
                            <field name="payment_date" required="1" string="Payment Date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="deposit_reconcile_journal_id" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="journal_id" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}" string="Payment Method" />
                            <field name="suitable_journal_ids" invisible="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="deposit_account_id" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}" domain="[('id', 'in', filter_deposit_account_ids)]"/>
                            <field name="filter_deposit_account_ids" invisible="1"/>
                            <field name="currency_id" attrs="{'readonly': [('state', '!=', 'draft')]}" required="1"/>
                            <field name="is_customer_deposit_approval_matrix" invisible="1"/>
                            <field name="is_approve_button" invisible="1"/>
                            <field name="approval_matrix_id" attrs="{'invisible': [('is_customer_deposit_approval_matrix', '=', False)], 'required': [('is_customer_deposit_approval_matrix', '=', True)]}"/>
                            <field name="approval_matrix_line_id" invisible="1"/>
                            <field name="create_from_session_id" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Approval Matrix Line" name="approved_matrix_ids" attrs="{'invisible': ['|', ('approval_matrix_id', '=', False), ('is_customer_deposit_approval_matrix', '=', False)]}">
                            <field name="approved_matrix_ids" context="{'approved_matrix_ids': approved_matrix_ids}" force_save="1">
                                <tree create="0" edit="0" delete="0">
                                    <field name="sequence" />
                                    <field name="user_ids" widget="many2many_tags"/>
                                    <field name="minimum_approver" />
                                    <field name="state_char" />
                                    <field name="time_stamp" invisible="1"/>
                                    <field name="feedback" />
                                </tree>
                            </field>
                        </page>
                        <page string="Deposit History" name="deposit_history">
                            <field name="deposit_history">
                                <tree>
                                    <!-- <field name="due_date" /> -->
                                    <field name="name" string="Journal Entries"/>
                                    <field name="deposit_account_journal_id" string="Payment Method" readonly="1"/>
                                    <field name="create_from_session_id" readonly="1" optional="show"/>
                                    <field name="amount_total_signed" string="Deposit Amount"/>
                                </tree>
                            </field>
                        </page>
                        <page string="POS Orders" name="pos_orders">
                            <field name="pos_order_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="customer_deposit_amount" string="Amount"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="inherit_customer_deposit_view_tree" model="ir.ui.view">
        <field name="name">inherit_customer_deposit_view_tree</field>
        <field name="model">customer.deposit</field>
        <field name="inherit_id" ref="equip3_accounting_deposit.customer_deposit_view_tree"/>
        <field name="arch" type="xml">
            <field name="state" position="before">
                <field name="company_id" optional="show"/>
                <field name="branch_id"  optional="show"/>
            </field>
        </field>
    </record>


    <record id="pos_member_deposit_action" model="ir.actions.act_window">
        <field name="name">Member Deposit</field>
        <field name="res_model">customer.deposit</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="equip3_accounting_deposit.view_customer_deposit_filter"/>
        <field name="context">{
            'default_is_from_pos': True,
            'form_view_ref': 'equip3_pos_membership.pos_member_deposit_view_form',
        }</field>
        <field name="domain">[('partner_id','!=',False), ('partner_id.is_pos_member','=',True)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
              Register a Member Deposit
            </p>
        </field>
    </record>

    <menuitem id="pos_member_deposit"
        action="pos_member_deposit_action"
        parent="menu_loyalty"
        sequence="65"
        groups="equip3_pos_masterdata.group_pos_supervisor,equip3_pos_masterdata.group_pos_manager,equip3_pos_masterdata.group_pos_staff,equip3_pos_masterdata.group_pos_cashier,equip3_pos_masterdata.group_pos_waiter"/>

</odoo>