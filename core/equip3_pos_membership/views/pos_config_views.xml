<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="pos_config_retail" model="ir.ui.view">
        <field name="name">pos.config.retail</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="equip3_pos_general.pos_config_retail"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='promotion_program']" position="before">
                <group string="Loyalty Program">
                    <field name="pos_loyalty_ids" widget="many2many_tags" string="Loyalty"/>
                    <field name="loyalty_combine_promotion"/>
                    <field name="loyalty_redeem_in_pos_screen"/>
                </group>
            </xpath>

            <xpath expr="//page[@name='sync_setting']" position="after">
                <page string="Deposit" groups="point_of_sale.group_pos_manager" name="customer_deposit">
                    <group>
                        <group>
                            <field name="customer_deposit_account_id" 
                                option="{'no_create': True}"/>
                            <field name="customer_deposit_reconcile_journal_id" 
                                option="{'no_create': True}"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="pos_config_view_form_inherit" model="ir.ui.view">
        <field name="name">pos.config.view.form.inherit</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='pricing']/div[6]" position="replace">
                <!-- Remove Loyalty program Enterprise-->
                <div class="loyalty_hidden"></div>
            </xpath>
        </field>
    </record>


</odoo>

	