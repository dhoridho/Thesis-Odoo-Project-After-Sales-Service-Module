<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_pos_pos_form_loyalty" model="ir.ui.view">
        <field name="name">pos.order.form</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lines']/tree/field[@name='price_subtotal_incl']" position="after">
                <field name="plus_point" readonly="1" optional="hide"/>
                <field name="redeem_point" readonly="1" optional="hide"/>
                <field name="reward_id" readonly="1" optional="hide"/>
                <!-- <field name="is_product_redeemed" readonly="1" optional="hide"/> -->
            </xpath>
            <xpath expr="//page[@name='extra']" position="after">
                <page string="Member Points" name="loyalty">
                    <group>
                        <field name="plus_point" readonly="1"/>
                        <field name="redeem_point" readonly="1"/>
                        <field name="point_ids" nolabel="1" colspan="4"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_pos_order_tree_loyalty" model="ir.ui.view" >
        <field name="name">Orders</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='session_id']" position="after">
                <field name="plus_point" groups="point_of_sale.group_pos_manager" optional="hide"/>
                <field name="redeem_point" groups="point_of_sale.group_pos_manager" optional="hide"/>
            </xpath>
        </field>
    </record>
    
</odoo>