<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="MemberDepositAddPopups" owl="1">
        <div role="dialog" class="modal-dialog member-deposit-add-popups">
            <Draggable>
                <div class="popup popup-textarea" >
                    <header class="title drag-handle">
                        <t t-esc="props.title" />
                    </header>
                    <div class="member-deposit-form">
                        <div class="input-group">
                            <label>Deposit Amount</label>
                            <input class="form-control" type="text" pattern="[0-9]+([,\.][0-9]+)?" name="deposit_amount" t-on-change="OnChange"/>
                        </div> 
                        <div class="input-group">
                            <label>Payment Method</label>
                            <select name="payment_method_id" class="form-control">
                                <option disable="disable"></option>
                                <t t-foreach="get_payment_methods()" t-as="payment">
                                    <option t-att-value="payment.id">
                                        <t t-esc="payment.name"/>
                                    </option>
                                </t>
                            </select>
                        </div>
                        <div class="input-group">
                            <label>Final Amount</label>
                            <div class="form-control i_final_amount" style="background: #f7f7f7;">
                                <t t-esc="state.final_amount"/>
                            </div>
                        </div>
                        <div class="input-group">
                            <label>Final Remaining Amount</label>
                            <div class="form-control i_final_remaining_amount" style="background: #f7f7f7;">
                                <t t-esc="state.final_remaining_amount"/>
                            </div>
                        </div>
                    </div>
                    <footer class="footer">
                        <div class="button button-close" t-on-click="close">
                            <t t-esc="props.cancelText" />
                        </div>
                        <div class="button confirm" t-on-click="save_deposit">
                            <span><t t-esc="props.confirmText" /> </span>
                            <span t-if="state.send_state == 'process'">
                                <i class="fa fa-spin fa-spinner"></i>
                            </span>
                        </div>

                    </footer>
                </div>
            </Draggable>
        </div>
    </t>

</templates>