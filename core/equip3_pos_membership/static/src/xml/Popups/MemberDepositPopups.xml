<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="MemberDepositPopups" owl="1">
        <div role="dialog" class="modal-dialog member-deposit-popups">
            <Draggable>
                <div class="popup popup-textarea" >
                    <header class="title drag-handle">
                        <t t-esc="props.title" />
                    </header>
                    <div class="member-deposit-form">
                        <div class="input-group">
                            <label>Member</label>
                            <input name="partner_id" id="member-deposit_partner_id"/>
                        </div>
                        <div class="input-group">
                            <label>Payment Method</label>
                            <select name="payment_method_id" class="form-control">
                                <t t-foreach="get_payment_methods()" t-as="payment">
                                    <option t-att-value="payment.id">
                                        <t t-esc="payment.name"/>
                                    </option>
                                </t>
                            </select>
                        </div>
                        <div class="input-group">
                            <label>Amount</label>
                            <input class="form-control" type="number" name="amount"/>
                        </div>
                    </div>
                    <footer class="footer">
                        <div class="button button-close" t-on-click="close">
                            <t t-esc="props.cancelText" />
                        </div>
                        <div class="button confirm" t-on-click="save_deposit">
                            <span><t t-esc="props.confirmText" /> </span>
                            <span t-if="state.send_state == 'process'">
                                <i class="fa fa-spin fa-spinner"></i>
                            </span>
                        </div>

                    </footer>
                </div>
            </Draggable>
        </div>
    </t>

</templates>