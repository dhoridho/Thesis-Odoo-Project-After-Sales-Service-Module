<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="MemberDepositCreate" owl="1">
        <section class="client-details edit"
                 style="max-height: 600px;min-height: 300px;height: fit-content;">
            <div class="header">
            </div>
            <div class="client-name" style="color: inherit; ">
            </div>
            <div class="client-details-box clearfix">
                <div class="client-details-left">
                    <div class="client-detail">
                        <span class="label">Member</span>
                        <input class="detail" name="partner_id" id="member-deposit_partner_id"/>
                    </div>
                    <div class="client-detail">
                        <span class="label">Payment Method</span>
                        <select name="payment_method_id" class="detail" t-on-change="captureChange">
                            <option value=""></option>
                            <t t-foreach="get_payment_methods()" t-as="payment">
                                <option t-att-value="payment.id">
                                    <t t-esc="payment.name"/>
                                </option>
                            </t>
                        </select>
                    </div>
                    <div class="client-detail">
                        <span class="label">Amount</span>
                        <input class="detail need_separator" name="amount" t-on-change="captureChange" value="0" />
                    </div>
                    <div class="client-detail">
                        <span class="label">Remaining Amount</span>
                        <input class="detail need_separator" name="remaining_amount" readonly="1" />
                    </div>
                </div>
                <div class="client-details-right">
                    
                </div>
            </div>
        </section>
    </t>
</templates>