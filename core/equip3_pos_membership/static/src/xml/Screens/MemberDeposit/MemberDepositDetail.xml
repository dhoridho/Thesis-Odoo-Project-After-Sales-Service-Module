<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="MemberDepositDetail" owl="1">
        <t t-set="deposit" t-value="props.deposit"/>
        <section class="client-details edit"
                 style="max-height: 600px;min-height: 300px;height: fit-content;">
            <div class="header">
                
            </div>
            <div class="client-name" style="color: inherit; ">
                <div class="deposit_backend_link">
                    <t t-if="deposit.name">
                        <t t-esc="deposit.name"/>
                    </t>
                    <t t-else="">
                        N/A
                    </t>
                    <span> </span>
                </div>
            </div>
            <div class="client-details-box clearfix">
                <div class="client-details-left">
                    <div class="client-detail">
                        <span class="label">Member</span>
                        <t t-esc="deposit.partner_id and deposit.partner_id[1] or 'N/A'"/>
                    </div>
                    <div class="client-detail">
                        <span class="label">Amount</span>
                        <t t-esc="deposit.amount"/>
                    </div>
                    <div class="client-detail">
                        <span class="label">Remaining Amount</span>
                        <t t-esc="deposit.remaining_amount"/>
                    </div>
                    <div class="client-detail">
                        <span class="label">Reference</span>
                        <t t-esc="deposit.communication or '' "/>
                    </div>
                </div>
                <div class="client-details-right">
                    <div class="client-detail">
                        <span class="label">Status</span>
                        <span>
                            <t t-if="deposit.state == 'draft'">
                                <span>Draft</span>
                            </t>
                            <t t-if="deposit.state == 'to_approve'">
                                <span>Waiting For Approval</span>
                            </t>
                            <t t-if="deposit.state == 'rejected'">
                                <span>Rejected</span>
                            </t>
                            <t t-if="deposit.state == 'post'">
                                <span>Received</span>
                            </t>
                            <t t-if="deposit.state == 'posted'">
                                <span>Posted</span>
                            </t>
                            <t t-if="deposit.state == 'returned'">
                                <span>Returned</span>
                            </t>
                            <t t-if="deposit.state == 'converted'">
                                <span>Converted to Revenue</span>
                            </t>
                            <t t-if="deposit.state == 'reconciled'">
                                <span>Reconciled</span>
                            </t>
                            <t t-if="deposit.state == 'cancelled'">
                                <span>Cancelled</span>
                            </t>
                        </span> 
                    </div>
                    <div class="client-detail">
                        <span class="label">Payment Date</span>
                        <t t-esc="getDate(deposit.payment_date)"/>
                    </div>
                    <div class="client-detail">
                        <span class="label">Payment Method</span>
                        <t t-esc="deposit.journal_id and deposit.journal_id[1] or 'N/A'"/>
                    </div>
                </div>

            </div>
        </section>
    </t>
</templates>
