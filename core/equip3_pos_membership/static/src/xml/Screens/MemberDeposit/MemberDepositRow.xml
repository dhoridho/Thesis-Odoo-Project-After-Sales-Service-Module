<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="MemberDepositRow" owl="1">
        <t t-set="deposit" t-value="props.deposit"/>
        <tr class="receipt-line"
            t-on-click="trigger('click-deposit', {deposit: deposit})">

            <td class="td-number" style="text-align: left">
                <t t-esc="props.number"/>
            </td> 

            <td class="td-name" style="text-align: left">
                <t t-esc="deposit.name or 'N/A'"/>
            </td> 
            <td class="td-partner_id" style="text-align: left">
                <t t-esc="deposit.partner_id and deposit.partner_id[1] or 'N/A'"/>
            </td> 
            <td class="td-payment_date" style="text-align: left">
                <t t-esc="getDate(deposit.payment_date) or 'N/A'"/>
            </td> 
            <td class="td-deposit_account_id" style="text-align: right">
                <t t-esc="deposit.deposit_account_id and deposit.deposit_account_id[1] or 'N/A'"/>
            </td> 
            <td class="td-state" style="text-align: center">
                <t t-if="deposit.state == 'draft'">
                    <span>Draft</span>
                </t>
                <t t-if="deposit.state == 'to_approve'">
                    <span>Waiting For Approval</span>
                </t>
                <t t-if="deposit.state == 'rejected'">
                    <span>Rejected</span>
                </t>
                <t t-if="deposit.state == 'post'">
                    <span>Received</span>
                </t>
                <t t-if="deposit.state == 'posted'">
                    <span>Posted</span>
                </t>
                <t t-if="deposit.state == 'returned'">
                    <span>Returned</span>
                </t>
                <t t-if="deposit.state == 'converted'">
                    <span>Converted to Revenue</span>
                </t>
                <t t-if="deposit.state == 'reconciled'">
                    <span>Reconciled</span>
                </t>
                <t t-if="deposit.state == 'cancelled'">
                    <span>Cancelled</span>
                </t>
            </td>
            <td class="td-action" style="text-align: center">
                <button t-on-click.stop="addDeposit(deposit)" class="button btn-add-member-deposit" t-if="deposit.state == 'post'">
                    <span>Add</span>
                </button>
            </td> 

        </tr>
    </t>

</templates>
