<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="MemberDepositList" owl="1">
        <div class="ticket-screen screen member-deposit-list" t-on-activate-edit-mode="activateEditMode">
            <div class="screen-content">

                <div class="controls">
                    <div class="buttons">

                        <button class="highlight close-screen-button" t-on-click="closeScreen" t-if="!state.detailIsShown and !state.createIsShown">
                            <i class="fa fa-chevron-left"></i>
                            <t t-if="!env.isMobile"> Back</t>
                        </button>
                        <button class="highlight" t-on-click="back" t-if="state.detailIsShown">
                            <i class="fa fa-chevron-left"></i>
                            <t t-if="!env.isMobile"> Back</t>
                        </button>


                        <button class="create-screen-button" t-on-click="createDeposit" t-if="!state.detailIsShown and !state.createIsShown">
                            <t t-if="!env.isMobile">
                                Create
                            </t>
                            <t t-else="">
                                <i class="fa fa-plus"></i>
                            </t>
                        </button>
                        <button class="save-screen-button"  t-on-click="trigger('click-save')" t-if="state.createIsShown">
                            <t t-if="!env.isMobile">
                                <i class="fa fa-floppy-o" t-if="state.save_state != 'process'"/>
                                <i class="fa fa-spin fa-spinner" t-if="state.save_state == 'process'"/>
                                <span> Save</span>
                            </t>
                            <t t-else="">
                                <i class="fa fa-floppy-o" t-if="state.save_state != 'process'"/>
                                <i class="fa fa-spin fa-spinner" t-if="state.save_state == 'process'"/>
                            </t>
                        </button>
                        <button class="discard-screen-button" t-on-click="discardDeposit" t-if="state.createIsShown and state.save_state != 'process'">
                            <t t-if="!env.isMobile">
                                <i class="fa fa-undo"></i>
                                <span> Discard</span>
                            </t>
                            <t t-else="">
                                <i class="fa fa-undo"></i>
                            </t>
                        </button>

                    </div>

                    <SearchBar automaticSearchOrder="true" t-if="!state.detailIsShown and !state.createIsShown" config="searchBarConfig" placeholder="'Search Member Deposit...'"/>

                    <button class="button-right" t-on-click="clearSearch" t-if="!state.detailIsShown and !state.createIsShown">
                        <i class="fa fa-refresh "></i>
                        <t t-if="!env.isMobile"> Show All</t>
                    </button>
                </div>


                <div t-if="state.detailIsShown and !state.createIsShown" class="client-details-contents subwindow-container-fix">
                    <MemberDepositDetail deposit="state.editModeProps.deposit" t-props="state.editModeProps"/>
                    <!-- TODO: when props change, MemberDepositDetailEdit will change, It reason we call t-props
                    -->
                </div>
                <div t-if="!state.detailIsShown and state.createIsShown" class="client-details-contents subwindow-container-fix">
                    <MemberDepositCreate/>
                </div>

                <t t-if="!state.detailIsShown and !state.createIsShown">
                    <table class="summary-table" t-if="(getDeposits and getDeposits.length != 0)">
                        <colgroup>
                            <col width="7%"/>
                            <col width="28%"/>
                            <col width="20%"/>
                            <col width="10%"/>
                            <col width="15%"/>
                            <col width="10%"/>
                        </colgroup>
                        <tr class="receipt-line header">
                            <td style="text-align: left">
                                No
                            </td>
                            <td style="text-align: left">
                                Name
                            </td>
                            <td style="text-align: left">
                                Member
                            </td>
                            <td style="text-align: left">
                                Date
                            </td>
                            <td style="text-align: center">
                                Deposit Account
                            </td>
                            <td style="text-align: center">
                                Status
                            </td>
                            <td style="text-align: center">
                                Action
                            </td>
                        </tr>
                        <t t-set="number" t-value="1"/>
                        <t t-foreach="getDeposits" t-as="deposit" t-key="deposit.id">
                            <MemberDepositRow deposit="deposit"
                                number="number"
                                t-att-class="{'highlight': getHighlight}"
                                selectedDeposit="state.selectedDeposit"
                                detailIsShown="state.detailIsShown"
                                t-on-click-deposit="clickDeposit"/> 
                            <t t-set="number" t-value="number + 1"/>
                        </t>
                    </table>
                    <t t-else="">
                        <h1 class="loading-member-deposit" style="text-align: center;">
                            <span>... NOT FOUND ANY MEMBER DEPOSIT ...</span>
                        </h1>
                    </t>
                </t>

            </div>
        </div>
    </t>

</templates>
