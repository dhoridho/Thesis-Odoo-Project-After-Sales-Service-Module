<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">


    <t t-name="RetailPaymentScreenPaymentLines" t-inherit="equip3_pos_masterdata.RetailPaymentScreenPaymentLines" t-inherit-mode="extension">
        <xpath expr="div[hasclass('paymentlines')]/table/t" position="after">
            <t t-foreach="payment_with_member_points" t-as="line">
                <tr class="receipt-line tr-payment-line" t-on-click="selected_member_point_line(line)"
                        t-att-class="{selected: line.selected_redeem_payment}">
                     <td style="text-align: left; font-weight: 900">
                         Redeemed Point
                     </td>
                     <td style="text-align: right">
                        <div class="payment-amount">
                            <t t-esc="format_member_point_amount(line.price*-1)"/>
                        </div>
                    </td>
                    <td style="text-align: center">
                        <div class="delete-button"
                             t-att-class="{'oe_hidden': disableRemoveLine}"
                             t-on-click="delete_member_point_line(line)"
                             aria-label="Delete" title="Delete">
                            <i class="fa fa-times-rectangle"/>
                        </div>
                    </td>
                  
                 </tr>
            </t>
        </xpath>
    </t>

    <t t-name="RetailPaymentMethodButtonExt1" t-inherit="equip3_pos_masterdata.RetailPaymentMethodButton" t-inherit-mode="extension" owl="1">
        <xpath expr="//button[hasclass('payment-box')]" position="attributes">
            <attribute name="t-att-payment-deposit">props.paymentMethod.is_deposit_payment</attribute>
        </xpath>
    </t>


</templates>

