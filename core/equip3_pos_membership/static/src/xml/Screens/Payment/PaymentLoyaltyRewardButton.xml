<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="PaymentLoyaltyRewardButton" owl="1">
        <button class="mode-button button-select-loyalty-reward"
                t-att-class="{ 'oe_hidden': !env.pos.rewards, }"
                t-att-disabled="!env.pos.rewards"
                t-on-click="selectLoyaltyReward">
            <i class="fa fa-file-text-o"/>
            <span class="payment-name">
                <t t-esc="getLoyaltyPoints"/>
            </span>
        </button>
    </t>

    <t t-name="PaymentButtonsExt1" t-inherit="equip3_pos_masterdata.PaymentButtons" t-inherit-mode="extension" owl="1">
        <xpath expr="." position="inside">
            <PaymentLoyaltyRewardButton />
        </xpath>
    </t>
</templates>
