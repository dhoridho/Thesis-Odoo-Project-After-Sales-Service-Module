<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="RetailOrderReceiptCustomTemplate" t-inherit="equip3_pos_masterdata.RetailOrderReceiptCustomTemplate" t-inherit-mode="extension" owl="1">

        <xpath expr="//div[hasclass('receipt_template_c_content_bottom')]" position="after">
                <div t-if="receipt.client and receipt_template.is_receipt_member_info">
                    <p style="    margin: 1px 0px;white-space: nowrap; overflow: hidden; text-overflow: unset;">--------------------------------------------------------------------------------------</p>
                    <p  style="    margin: 1px 0px;"><b>Loyalty Member :  <t t-esc="receipt.client.name"/> </b></p>
                    <p  style="    margin: 1px 0px;" >Opening Points : 
                        <t t-if="!reprint">
                            <t t-esc="receipt.client.pos_loyalty_point"/> 
                        </t>
                        <t t-if="reprint">
                            <t t-esc="receipt.client.pos_loyalty_point-receipt.plus_point+receipt.redeem_point"/> 
                        </t>
                    </p>
                    <p  style="    margin: 1px 0px;">Plus Points : <t t-esc="receipt.plus_point"/></p>
                    <p  style="    margin: 1px 0px;">Redeem Points : <t t-esc="receipt.redeem_point"/> </p>
                    <p  style="    margin: 1px 0px;" >Current Points : 
                        <t t-if="!reprint">
                            <t t-esc="receipt.client.pos_loyalty_point+receipt.plus_point-receipt.redeem_point"/>
                        </t>
                        <t t-if="reprint">
                            <t t-esc="receipt.client.pos_loyalty_point"/>
                        </t>
                    </p>
                </div>
        </xpath>

    </t>

</templates>
