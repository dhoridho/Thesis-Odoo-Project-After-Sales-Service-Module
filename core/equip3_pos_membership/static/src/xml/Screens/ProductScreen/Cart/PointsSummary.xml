<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="PointsSummary" owl="1">
        <t t-if="order">  
            <table class="loyalty-points" 
                t-att-style="!env.pos.get_order().get_client_name()?'display:none;':''">
                <t t-if="env.pos.get_order().get_client_name()">
                    <tr>
                        <td class="loyalty-points-title">Customer</td>
                        <td class="loyalty-points-total">
                            <span><t t-esc="env.pos.get_order().get_client_name()"/></span>
                        </td>
                    </tr>
                    <tr>
                        <td class="loyalty-points-title">Member Points</td>
                        <td class="loyalty-points-total">
                            <span><t t-esc="env.pos.format_currency_no_symbol(get_points.pos_loyalty_point)"/></span>
                        </td>
                    </tr>
                    <tr>
                        <td class="loyalty-points-title">Plus Points</td>
                        <td class="loyalty-points-total">
                            <span>+<t t-esc="env.pos.format_currency_no_symbol(get_points.plus_point)"/></span>
                        </td>
                    </tr>
                    <tr>
                        <td class="loyalty-points-title">Redeem Points</td>
                        <td class="loyalty-points-total">
                            <span>-<t t-esc="get_points.redeem_point"/></span>
                        </td>
                    </tr>
                    <tr>
                        <td class="loyalty-points-title">Next Points</td>
                        <td class="loyalty-points-total">
                            <span><t t-esc="env.pos.format_currency_no_symbol(get_points.next_point)"/></span>
                        </td>
                    </tr>
                </t>
            </table>
        </t>
        <t t-else="">
            <div class="loyalty-points-empty"></div>
        </t>
    </t>

</templates>
