<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="POSMembClientListScreen" t-inherit="point_of_sale.ClientListScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('clientlist-screen')]" position="attributes">
            <attribute name="id">member_client_list_view</attribute>
        </xpath>
        <xpath expr="//div[hasclass('new-customer')]" position="replace">

        </xpath>
        <xpath expr="//div[hasclass('btn-sync-pos-partner')]" position="before">
            <div t-if="!state.detailIsShown &amp;&amp; !state.selectedClient" class="button new-customer new-member" role="img" aria-label="Add a customer"
                  t-on-click="trigger('activate-edit-mode', { isNewClient: true })"
                  t-att-class="!env.pos.config.is_allow_create_member_in_pos_screen and 'oe_hidden' or '' "
                  title="Create New Member">
                <i class="fa fa-plus" style='margin-right: 7px;'></i> 
                    Create
               
            </div>
        </xpath>
        <xpath expr="//div[hasclass('searchbox-client')]/input" position="attributes">
            <attribute name="placeholder">Search Members</attribute>
        </xpath>
        <xpath expr="//div[hasclass('searchbox-client')]" position="attributes">
            <attribute name="search_members">1</attribute>
        </xpath>
        <xpath expr="//table[hasclass('summary-table')]" position="attributes">
            <attribute name="style">display: table;</attribute>
        </xpath>

        

    </t>
