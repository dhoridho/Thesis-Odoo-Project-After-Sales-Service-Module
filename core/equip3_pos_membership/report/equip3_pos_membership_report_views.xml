<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="equip3_pos_membership_report_tree_view" model="ir.ui.view">
        <field name="name">equip3.pos.membership.report.tree.view</field>
        <field name="model">equip3.pos.membership.report</field>
        <field name="arch" type="xml">
            <tree create="false" edit="false" delete="false">
                <field name="member_code"/>
                <field name="name"/>
                <field name="date_joined"/>
                <field name="member_point"/>
                <field name="total_order"/>
                <field name="company_id"/>
   
            </tree>
        </field>
    </record>

    <record id="equip3_pos_membership_report_search" model="ir.ui.view">
        <field name="name">equip3.pos.membership.report.search</field>
        <field name="model">equip3.pos.membership.report</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="member_code"/>
                <field name="date_joined"/>

                <filter string="Date Joined This Month" name="this_month"
                        domain="[('date_joined', '&gt;=', context_today().strftime('%%Y-%%m-01'))]"/>
                <filter string="Date Joined Last Month" name="last_month"
                        domain="['&amp;', ('date_joined', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%%Y-%%m-01')), ('date_joined', '&lt;', context_today().strftime('%%Y-%%m-01'))]"/>
                <filter string="Date Joined Last 6 Months" name="6months"
                        domain="[('date_joined','&gt;=',(context_today()-relativedelta(months=5)).strftime('%Y-%m-01'))]"/>

                <group expand="1" string="Group By">
                    <filter string="Join Date" name="join_date_by_year" context="{'group_by':'year_joined'}"/>
                </group>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_equip3_pos_membership_report">
        <field name="name">Membership</field>
        <field name="res_model">equip3.pos.membership.report</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="equip3_pos_membership_report_menu"
        action="action_equip3_pos_membership_report"
        parent="point_of_sale.menu_point_rep" 
        sequence="115"
        groups="equip3_pos_masterdata.group_pos_supervisor,equip3_pos_masterdata.group_pos_manager"/>

        
</odoo>