<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="vehicle_cost_report_pivot_view" model="ir.ui.view">
        <field name="name">asset.cost.report.pivot</field>
        <field name="model">maintenance.equipment.vehicle.report</field>
        <field name="arch" type="xml">
            <pivot string="Vehicle Cost Report" display_quantity="true">
                <field name="name" string="Vehicle Name" type="row"/>
                <field name="amount_total_mwo" type="measure"/>
                <field name="amount_total_mro" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="vehicle_cost_report_action" model="ir.actions.act_window">
        <field name="name">Vehicle Cost Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">maintenance.equipment.vehicle.report</field>
        <field
                name="view_ids"
                eval="[(5, 0, 0), (0, 0, {'view_mode': 'pivot', 'view_id': ref('vehicle_cost_report_pivot_view')})]"/>
        <field name="view_mode">pivot</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create your first Vehicle cost report
            </p>

        </field>
    </record>

    <menuitem
            id="vehicle_cost_report_pivot_menu"
            name="Vehicle Cost Report"
            action="vehicle_cost_report_action"
            parent="maintenance.maintenance_reporting"
            active ="False"/>

</odoo>