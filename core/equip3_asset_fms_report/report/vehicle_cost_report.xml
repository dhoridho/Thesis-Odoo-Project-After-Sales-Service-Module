<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="vehicle_cost_report_pivot" model="ir.ui.view">
        <field name="name">vehicle.cost.report.pivot</field>
        <field name="model">maintenance.equipment</field>
        <field name="arch" type="xml">
            <pivot string="Vehicle Cost Report">
                <field name="name" string="Vehicle" type="row"/>
                <field name="category_id" type="row"/>
                <field name="fac_area" type="row"/>
                <field name="maintenance_work_order" string="Maintenance Work Order" type="row"/>
                <field name="maintenance_repair_order" string="Maintenance Repair Order" type="row"/>
                <field name="chassis_number" type="row"/>
                <field name="driver_1" type="row"/>
                <field name="driver_2" type="row"/>
                <field name="fuel_type" type="row"/>
                <field name="horsepower" type="row"/>
                <field name="manufacture_year" type="row"/>
                <field name="model_year" type="row"/>
                <field name="transmission" type="row"/>
                <field name="engine_number" type="row"/>
                <field name="capacity" type="measure"/>
                <field name="volume" type="measure"/>
                <field name="create_uid" invisible="1"/>
                <field name="active" invisible="1"/>
                <field name="assign_date" invisible="1"/>
                <field name="department_id" invisible="1"/>
                <field name="employee_id" invisible="1"/>
                <field name="equipment_assign_to" invisible="1"/>
                <field name="vehicle_checkbox" invisible="1"/>
                <field name="color" invisible="1"/>
                <field name="company_id" invisible="1"/>
                <field name="create_date" invisible="1"/>
                <field name="maintenance_open_count" invisible="1"/>
                <field name="next_action_date" invisible="1"/>
                <field name="period" invisible="1"/>
                <field name="effective_date" invisible="1"/>
                <field name="hm_unit" invisible="1"/>
                <field name="write_date" invisible="1"/>
                <field name="write_uid" invisible="1"/>
                <field name="location" invisible="1"/>
                <field name="message_main_attachment_id" invisible="1"/>
                <field name="maintenance_teams_id" invisible="1"/>
                <field name="maintenance_count" invisible="1"/>
                <field name="maintenance_f_id" invisible="1"/>
                <field name="maintenance_plan_count" invisible="1"/>
                <field name="repair_order_id" invisible="1"/>
                <field name="maintenance_team_id" invisible="1"/>
                <field name="model" invisible="1"/>
                <field name="odometer_unit" invisible="1"/>
                <field name="company_id_asset" invisible="1"/>
                <field name="owner_user_id" invisible="1"/>
                <field name="purchase_value" invisible="1"/>
                <field name="repair" invisible="1"/>
                <field name="serial_no" invisible="1"/>
                <field name="state" invisible="1"/>
                <field name="technician_user_id" invisible="1"/>
                <field name="partner_id" invisible="1"/>
                <field name="partner_ref" invisible="1"/>
                <field name="warranty_date" invisible="1"/>
                <field name="work_order" invisible="1"/>
                <field name="scrap_date" invisible="1"/>
                <field name="maintenance_duration" invisible="1"/>
                <field name="cost" invisible="1"/>
            </pivot>
        </field>
    </record>

    <record id="vehicle_cost_report_graph" model="ir.ui.view">
        <field name="name">vehicle.cost.report.graph</field>
        <field name="model">maintenance.equipment</field>
        <field name="arch" type="xml">
            <graph string="Vehicle Cost Report">
                <field name="color" invisible="1"/>
                <field name="cost" invisible="1"/>
                <field name="maintenance_duration" invisible="1"/>
                <field name="maintenance_count" invisible="1"/>
                <field name="repair" invisible="1"/>
                <field name="maintenance_plan_count" invisible="1"/>
                <field name="period" invisible="1"/>
                <field name="work_order" invisible="1"/>
                <field name="maintenance_open_count" invisible="1"/>
            </graph>
        </field>
    </record>

    <record id="vehicle_cost_report_action" model="ir.actions.act_window">
        <field name="name">Vehicle Cost Report</field>
        <field name="type">ir.actions.act_window</field>
         <field
                name="view_ids"
                eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'pivot', 'view_id': ref('vehicle_cost_report_pivot')}),
            (0, 0, {'view_mode': 'graph', 'view_id': ref('vehicle_cost_report_graph')}
        )]"/>
        <field name="res_model">maintenance.equipment</field>
        <field name="view_mode">graph,pivot</field>
        <field name="domain">[('vehicle_checkbox', '=', True)]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create your first Vehicle Cost Report.
            </p>
        </field>
    </record>

    <menuitem
            id="vehicle_cost_report_menu"
            name="Vehicle Cost Report"
            action="vehicle_cost_report_action"
            parent="maintenance.maintenance_reporting"
            sequence="6"
            active = "False"/>
</odoo>