    <record id="asset_cost_report_action" model="ir.actions.act_window">
        <field name="name">Asset Cost Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">maintenance.equipment</field>
        <field
                name="view_ids"
                eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'pivot', 'view_id': ref('assets_cost_report_pivot')}),
            (0, 0, {'view_mode': 'graph', 'view_id': ref('asset_cost_report_graph')}
        )]"/>
        <field name="view_mode">pivot,graph</field>
        <field name="domain">[('vehicle_checkbox', '=', False)]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
