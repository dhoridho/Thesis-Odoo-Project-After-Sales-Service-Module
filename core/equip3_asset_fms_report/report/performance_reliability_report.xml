<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- machinery.performance.reliability.search.view search view -->
        <record id="machinery_performance_reliability_search_view_search" model="ir.ui.view">
            <field name="name">machinery.performance.reliability.search.view.search</field>
            <field name="model">machinery.performance.reliability</field>
            <field name="arch" type="xml">
                <search string="Search Description">
                    <group expand='0' string='Filters'>
                        <filter name="filter_in_date" date="create_date"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- machinery.performance.reliability pivot view -->
        <record id="machinery_performance_reliability_view_pivot" model="ir.ui.view">
            <field name="name">machinery.performance.reliability.view.pivot</field>
            <field name="model">machinery.performance.reliability</field>
            <field name="arch" type="xml">
                <pivot string="Pivot Description" disable_linking="True">
                    <field name="asset" type="row"/>
                    <field name="mtbf" type="measure"/>
                    <field name="mttr" type="measure"/>
                    <field name="mttf" type="measure"/>
                    <field name="pa" type="measure"/>
                    <field name="ua" type="measure"/>
                    <field name="ma" type="measure"/>
                    <field name="eu" type="measure"/>
                    <field name="create_date"/>
                </pivot>
            </field>
        </record>

        <!-- machinery.performance.reliability action window -->
        <record id="machinery_performance_reliability_action" model="ir.actions.act_window">
            <field name="name">Machinery Performance Reliability</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">machinery.performance.reliability</field>
            <field name="view_mode">pivot</field>
        </record>

        <menuitem
            id="machinery_performance_reliability_menu"
            name="Machinery Performance Reliability Report"
            action="machinery_performance_reliability_action"
            parent="maintenance.maintenance_reporting"
            sequence="30"/>
    </data>
</odoo>