<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="maintenance_work_order_pivot" model="ir.ui.view">
        <field name="name">maintenance.work.order.pivot</field>
        <field name="model">maintenance.work.order</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="equipment_id" type="row" invisible="1"/>
                <field name="name" type="row"/>
                <field name="facility"  type="row" invisible="1"/>
                <field name="partner_id"  type="row" invisible="1"/>
                <field name="startdate"  type="row" invisible="1"/>
                <field name="enddate" type="row" invisible="1"/>
                <field name="maintenanceteam" type="row" invisible="1"/>
                <field name="maintenanceassign" type="row" invisible="1"/>
                <field name="created_date" type="row" invisible="1"/>
                <field name="user_id" type="row" invisible="1"/>
                <field name="company_id" type="row" invisible="1"/>
                <field name="instructions" type="row" invisible="1"/>
                <field name="remarks" type="row" invisible="1"/>
                <field name="task" type="row" invisible="1"/>
                <field name="parent_location" type="row" invisible="1"/>
                <field name="wo" invisible="1"/>
                <field name="comp_name" invisible="1"/>
                <field name="attach_count" invisible="1"/>
                <field name="complete_name" invisible="1"/>
                <field name="ref" invisible="1"/>
                <field name="user_id" invisible="1"/>
                <field name="message_main_attachment_id" invisible="1"/>
                <field name="asset_count" invisible="1"/>
                <field name="ref" invisible="1"/>
                <field name="maintenance_plan_id" invisible="1"/>
                <field name="time_in_progress" type="measure"/>
                <field name="time_post" type="measure"/>
                <field name="amount_total" type="measure"/>    
            </pivot>
        </field>
    </record>

    <record id="maintenance_work_order_graph" model="ir.ui.view">
        <field name="name">maintenance.work.order.graph</field>
        <field name="model">maintenance.work.order</field>
        <field name="arch" type="xml">
            <graph>
                <field name="equipment_id" type="row" invisible="1"/>
                <field name="name" type="row"/>
                <field name="facility"  type="row" invisible="1"/>
                <field name="partner_id"  type="row" invisible="1"/>
                <field name="startdate"  type="row" invisible="1"/>
                <field name="enddate" type="row" invisible="1"/>
                <field name="maintenanceteam" type="row" invisible="1"/>
                <field name="maintenanceassign" type="row" invisible="1"/>
                <field name="created_date" type="row" invisible="1"/>
                <field name="user_id" type="row" invisible="1"/>
                <field name="company_id" type="row" invisible="1"/>
                <field name="instructions" type="row" invisible="1"/>
                <field name="remarks" type="row" invisible="1"/>
                <field name="task" type="row" invisible="1"/>
                <field name="parent_location" type="row" invisible="1"/>
                <field name="wo" invisible="1"/>
                <field name="comp_name" invisible="1"/>
                <field name="attach_count" invisible="1"/>
                <field name="complete_name" invisible="1"/>
                <field name="ref" invisible="1"/>
                <field name="user_id" invisible="1"/>
                <field name="message_main_attachment_id" invisible="1"/>
                <field name="asset_count" invisible="1"/>
                <field name="ref" invisible="1"/>
            </graph>
        </field>
    </record>


    <record id="maintenance_work_order_action" model="ir.actions.act_window">
        <field name="name">Maintenance Work Order Report</field>
        <field name="type">ir.actions.act_window</field>
        <field
                name="view_ids"
                eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'pivot', 'view_id': ref('maintenance_work_order_pivot')}),
            (0, 0, {'view_mode': 'graph', 'view_id': ref('maintenance_work_order_graph')}
        )]"/>
        <field name="res_model">maintenance.work.order</field>
        <field name="view_mode">pivot,graph</field>
        <field name="domain"></field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create your first Asset cost report
            </p>

        </field>
    </record>


    <menuitem
            id="maintenance_work_order_report_menu"
            name="Maintenance Work Order Report"
            action="maintenance_work_order_action"
            parent="maintenance.maintenance_reporting"
            sequence="7"
            active="false"/>

</odoo>