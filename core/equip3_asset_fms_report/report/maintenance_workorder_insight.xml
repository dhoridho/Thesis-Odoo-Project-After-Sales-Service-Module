<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- mwo.report pivot view -->
        <record id="maintenance_workorder_insight_view_pivot" model="ir.ui.view">
            <field name="name">maintenance.workorder.insight.view.pivot</field>
            <field name="model">maintenance.workorder.insight</field>
            <field name="arch" type="xml">
                <pivot string="Pivot Description" disable_linking="True">
                    <field name="equipment_id" type="row"/>
                    <field name="name"/>
                    <field name="time_in_progress" type="measure"/>
                    <field name="time_post" type="measure"/>
                    <field name="total_time" type="measure"/>
                    <field name="cost" type="measure"/>
                    <field name="mwo_count" type="measure"/>
                    <field name="part_equipment_id"/>
                    <field name="product_id"/>
                </pivot>
            </field>
        </record>

        <!-- maintenance.workorder.insight action window -->
        <record id="maintenance_workorder_insight_action" model="ir.actions.act_window">
            <field name="name">Work Order Cost Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">maintenance.workorder.insight</field>
            <field name="view_mode">pivot</field>
        </record>

        <menuitem
            id="maintenacne_workorder_insight_report_menu"
            name="Work Order Cost Report"
            action="maintenance_workorder_insight_action"
            parent="maintenance.maintenance_reporting"
            sequence="1"/>
    </data>
</odoo>