<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="fuel_and_mileage_pivot_view" model="ir.ui.view">
        <field name="name">Fuel and Mileage Report</field>
        <field name="model">fuel.and.mileage.report</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="asset" type="row"/>
                <field name="serial_no" type="row"/>
                <field name="current_odometer" type="measure"/>
                <field name="current_hourmeter" type="measure"/>
                <field name="current_fuel" type="measure"/>
                <field name="cummulative_odometer" type="measure"/>
                <field name="cummulative_hourmeter" type="measure"/>
                <field name="cummulative_fuel" type="measure"/>
                <field name="average_odometer" type="measure"/>
                <field name="average_hourmeter" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="fuel_and_mileage_pivot_view_action" model="ir.actions.act_window">
        <field name="name">Fuel and Mileage Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">fuel.and.mileage.report</field>
        <field name="view_mode">pivot</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create your first
            </p>

        </field>
    </record>

    <menuitem
            id="fuel_and_mileage_pivot_view_menu"
            name="Fuel and Mileage Report"
            action="fuel_and_mileage_pivot_view_action"
            parent="maintenance.maintenance_reporting"
            sequence="25"/>

</odoo>
