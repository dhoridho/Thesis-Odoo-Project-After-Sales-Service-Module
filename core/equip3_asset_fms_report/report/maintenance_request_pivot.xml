<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- maintenance.request.pivot search view -->
        <record id="maintenance_request_pivot_view_search" model="ir.ui.view">
            <field name="name">maintenance.request.pivot.view.search</field>
            <field name="model">maintenance.request.pivot</field>
            <field name="arch" type="xml">
                <search string="Maintenance Request">
                    <group expand='0' string='Filters'>
                        <filter name="filter_date" date="date"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- maintenance.request.pivot pivot view -->
        <record id="maintenance_request_pivot_view_pivot" model="ir.ui.view">
            <field name="name">maintenance.request.pivot.view.pivot</field>
            <field name="model">maintenance.request.pivot</field>
            <field name="arch" type="xml">
                <pivot string="Pivot Maintenance Request" disable_linking="True">
                    <field name="name" type="row"/>
                    <field name="work_order"/>
                    <field name="repair_order"/>
                    <field name="equipment_id"/>
                </pivot>
            </field>
        </record>

        <!-- maintenance.request.pivot action window -->
        <record id="maintenance_request_pivot_action" model="ir.actions.act_window">
            <field name="name">Maintenance Requests Pivot</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">maintenance.request.pivot</field>
            <field name="view_mode">pivot,graph</field>
        </record>


        <menuitem
            id="maintenance.maintenance_request_reporting"
            active="False"/>

        <menuitem
            id="maintenance_request_pivot_menu"
            name="Maintenance Requests Report"
            action="maintenance_request_pivot_action"
            parent="maintenance.maintenance_reporting"
            sequence="35"/>
    </data>
</odoo>