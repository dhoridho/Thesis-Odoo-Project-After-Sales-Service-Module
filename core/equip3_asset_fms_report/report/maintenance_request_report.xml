<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_picking_advanced_main">
        <t t-call="equip3_asset_fms_report.template_picking_advance_layout">
            <t t-set="o" t-value="o.with_context({'lang':o.user_id.partner_id.lang})" />
            <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color" />
            <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color" />
            <t t-set="company_color" t-value="o.company_id and o.company_id.company_color" />
            <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color" />
            <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color" />
            <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color" />
            <t t-set="text_color" t-value="o.company_id and o.company_id.text_color" />
            <div class="page"
                t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                <div class="oe_structure" />
                <div width="100%">
                    <div style="padding:0px 20px 20px 20px; margin:0; background:#fff; line-height:20px;" width="100%">
                        <div t-attf-style="overflow:auto;border-top:1px solid #{theme_color or '#ececec'};">
                            <div align="left" style="float:left;padding:15px 0px 15px 0px;line-height:18px;"
                                valign="top">
                                <t t-call="equip3_asset_fms_report.templates_company_details" />
                            </div>
                            <div align="right" style="float:right;padding:15px 25px 25px 25px;" valign="top">
                                <table border="0" cellpadding="0" cellspacing="0"
                                    t-attf-style="color: #{theme_text_color or '#000000'}; border-collapse: collapse; background-color: #{theme_color or '#000000'}; width: 455px;">
                                    <tr>
                                        <td t-attf-style="padding:9px 25px; font-weight:bold;">
                                            <span>Maintenance Request No # </span>
                                        </td>
                                        <td t-attf-style="text-align:right; font-weight:bold;padding:9px 15px;">
                                            <span t-field="o.name" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" style="background-color:#f2f2f2; height:4px;" />
                                    </tr>
                                    <tr>
                                        <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                            <strong>Facility Area</strong>
                                        </td>
                                        <td t-attf-style="text-align:right; padding:5px 15px;">
                                            <span t-field="o.facility_area" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                            <strong>Asset</strong>
                                        </td>
                                        <td t-attf-style="text-align:right;padding:5px 15px;">
                                            <span t-field="o.equipment_id" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                            <strong>Request Date</strong>
                                        </td>
                                        <td t-attf-style="text-align:right;padding:5px 15px;">
                                            <span t-field="o.request_date" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                            <strong>
                                                <span class="text-left">Contact Number</span>
                                            </strong>
                                        </td>
                                        <td t-attf-style="text-align:right;padding:5px 15px;">
                                            <span t-field="o.contact_number" />
                                        </td>
                                    </tr>
                                    <tr t-if="o._check_delivery_installed() and o.picking_type_id.code == 'outgoing'">
                                        <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                            <strong>
                                                <span class="text-left">Carrier</span>
                                            </strong>
                                        </td>
                                        <td t-attf-style="text-align:right;padding:5px 15px;">
                                            <span t-field="o.carrier_id" />
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div>
                            <p
                                t-attf-style="border-bottom:1px solid #{theme_color or '#ececec'}; padding:0px 0px 10px 0px; width:100%;" />
                        </div>
                        <div align="left" style="padding:20px 0px 0 0; font-weight:bold; width:100%;" valign="top">
                        </div>
                        <div align="right">
                            <t t-call="equip3_asset_fms_report.report_signature" />
                        </div>
                    </div>
                </div>
                <div class="oe_structure" />
            </div>
        </t>
    </template>
    <template id="report_picking_custom_advanced">
        <t t-call="web.html_container">
            <t t-as="o" t-foreach="docs">
                <t t-call="equip3_asset_fms_report.report_picking_advanced_main" t-lang="o.user_id.partner_id.lang" />
            </t>
        </t>
    </template>
</odoo>