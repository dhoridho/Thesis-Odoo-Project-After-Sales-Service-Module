<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- asset.budget tree view -->
        <record id="asset_budget_view_tree" model="ir.ui.view">
            <field name="name">asset.budget.view.tree</field>
            <field name="model">asset.budget</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="branch_id"/>
                    <field name="analytic_group_id" string="Analytic Group"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- asset.budget form view -->
        <record id="asset_budget_view_form" model="ir.ui.view">
            <field name="name">asset.budget.view.form</field>
            <field name="model">asset.budget</field>
            <field name="arch" type="xml">
                <form string="Asset Reoport">
                    <header>
                        <!-- <button name="action_draft" string="Set Draft" type="object"/> -->
                        <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" attrs="{'invisible':[('state', '!=', 'draft')]}"/>
                        <button name="action_validate" string="Validate" type="object" class="oe_highlight" attrs="{'invisible':[('state', '!=', 'confirm')]}"/>
                        <button name="action_done" string="Done" type="object" class="oe_highlight" attrs="{'invisible':[('state', '!=', 'validate')]}"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <label for="name" class="oe_edit_only"/>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="analytic_group_id" string="Analytic Group" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="branch_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </group>
                            <group>
                                <field name="start_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="end_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="company_id" invisible="1"/>
                                <field name="company_currency_id" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Budget Lines">
                                <field name="asset_budget_line">
                                    <tree editable="bottom">
                                        <field name="equipment_id"/>
                                        <field name="analytic_group_id"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                        <field name="counting_date"/>
                                        <field name="planned_amount" sum="Total Planned" widget="monetary"/>
                                        <field name="practical_amount" sum="Total Practical" widget="monetary"/>
                                        <field name="theoretical_amount" sum="Total Theoretical" widget="monetary"/>
                                        <field name="achievement"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="equipment_id"/>
                                                <field name="analytic_group_id"/>
                                                <field name="currency_id" invisible="1"/>
                                                <field name="start_date"/>
                                                <field name="end_date"/>
                                            </group>
                                            <group>
                                                <field name="counting_date"/>
                                                <field name="planned_amount" sum="Total Planned" widget="monetary"/>
                                                <field name="practical_amount" sum="Total Practical" widget="monetary"/>
                                                <field name="theoretical_amount" sum="Total Theoretical" widget="monetary"/>
                                                <field name="achievement"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
                </form>
            </field>
        </record>

        <!-- asset.budget action window -->
        <record id="asset_budget_action" model="ir.actions.act_window">
            <field name="name">Asset Budget</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">asset.budget</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem id="asset_budget_menu" name="Asset Budget" action="asset_budget_action" parent="maintenance.maintenance_reporting" sequence="15"/>


    </data>
</odoo>