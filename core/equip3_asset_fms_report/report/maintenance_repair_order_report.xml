<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="maintenance_repair_order_pivot" model="ir.ui.view">
        <field name="name">maintenance.repair.order.pivot</field>
        <field name="model">maintenance.repair.order</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="name" string="Repair Order" type="row"/>
                <field name="user_id"  type="row" invisible="1"/>
                <field name="created_date"  type="row" invisible="1"/>
                <field name="company_id"  type="row" invisible="1"/>
                <field name="branch_id"  type="row" invisible="1"/>
                <field name="partner_id"  type="row" invisible="1"/>
                <field name="facilities_area"  type="row" invisible="1"/>
                <field name="maintenance_team"  type="row" invisible="1"/>
                <field name="maintenance_assignation_type"  type="row" invisible="1"/>
                <field name="date_start"  type="row" invisible="1"/>
                <field name="date_stop"  type="row" invisible="1"/>
                <field name="ref"  type="row" invisible="1"/>
                <field name="instruction"  type="row" invisible="1"/>
                <field name="remarks"  type="row" invisible="1"/>
                <field name="work_order_id" invisible="1"/>
                <field name="time_in_progress" type="measure"/>
                <field name="time_post" type="measure"/>
                <field name="amount_total" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="maintenance_repair_order_graph" model="ir.ui.view">
        <field name="name">maintenance.repair.order.graph</field>
        <field name="model">maintenance.repair.order</field>
        <field name="arch" type="xml">
            <graph>
               <field name="name" string="Repair Order" type="row"/>
                <field name="user_id"  type="row" invisible="1"/>
                <field name="created_date"  type="row" invisible="1"/>
                <field name="company_id"  type="row" invisible="1"/>
                <field name="branch_id"  type="row" invisible="1"/>
                <field name="partner_id"  type="row" invisible="1"/>
                <field name="facilities_area"  type="row" invisible="1"/>
                <field name="maintenance_team"  type="row" invisible="1"/>
                <field name="maintenance_assignation_type"  type="row" invisible="1"/>
                <field name="date_start"  type="row" invisible="1"/>
                <field name="date_stop"  type="row" invisible="1"/>
                <field name="ref"  type="row" invisible="1"/>
                <field name="instruction"  type="row" invisible="1"/>
                <field name="remarks"  type="row" invisible="1"/>
                <field name="work_order_id" invisible="1"/>
            </graph>
        </field>
    </record>


    <record id="maintenance_repair_order_action" model="ir.actions.act_window">
        <field name="name">Maintenance Repair Order Report</field>
         <field
                name="view_ids"
                eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'pivot', 'view_id': ref('maintenance_repair_order_pivot')}),
            (0, 0, {'view_mode': 'graph', 'view_id': ref('maintenance_repair_order_graph')}
        )]"/>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">maintenance.repair.order</field>
        <field name="view_mode">pivot,graph</field>
        <field name="domain"></field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create your first Asset cost report
            </p>

        </field>
    </record>


    <menuitem
            id="maintenance_repair_order_report_menu"
            name="Maintenance Repair Order Report"
            action="maintenance_repair_order_action"
            parent="maintenance.maintenance_reporting"
            sequence="8"
            active="false"/>

</odoo>