<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="forecast_hour_meter_maintenance_tree_view" model="ir.ui.view">
        <field name="name">Forecast Hour Meter Maintenance</field>
        <field name="model">forecast.hour.meter.maintenance</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0">
                <field name="name"/>
                <field name="serial_no"/>
                <field name="brand"/>
                <field name="state"/>
                <field name="last_date"/>
                <field name="current_hour"/>
                <field name="next_treshold"/>
                <field name="cummulative_hour"/>
                <field name="unit"/>
                <field name="monthly"/>
                <field name="difference"/>
                <field name="forecast_line_ids" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="forecast_hour_meter_maintenance_form_view" model="ir.ui.view">
        <field name="name">Forecast Hour Meter Maintenance</field>
        <field name="model">forecast.hour.meter.maintenance</field>
            <field name="arch" type="xml">
                <form string="Forecast" create="0" edit="0">
                    <sheet>
                        <field name="forecast_line_ids">
                            <tree editable="bottom" create="0" edit="0">
                                <field name="name"/>
                                <field name="state"/>
                                <field name="last_date"/>
                                <field name="current_hour"/>
                                <field name="next_treshold"/>
                                <field name="cummulative_hour"/>
                                <field name="unit"/>
                                <field name="monthly"/>
                                <field name="difference"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

    <record id="forecast_hour_meter_maintenance_kanban_view" model="ir.ui.view">
        <field name="name">Forecast Hour Meter Maintenance</field>
        <field name="model">forecast.hour.meter.maintenance</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban create="1" edit="0">
                <field name="equipment_id"/>
                <field name="name"/>
                <field name="serial_no"/>
                <field name="current_hour"/>
                <field name="next_treshold"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div style="box-shadow:2px 2px #eeeeee;">
                                <div class="pull-left" style="color:#1a73e8;border-radius:5px;">
                                    <field name="name"/>
                                </div>
                                <div class="pull-right"
                                        style="background-color:white;box-shadow:3px 3px #eeeeee;border-radius:5px;">
                                    <span>Next Treshold:
                                        <field name="next_treshold"/>
                                    </span>
                                </div>
                            </div>
                            <br/>
                            <div style="box-shadow:2px 2px #eeeeee;">
                                <div class="pull-left" style="background-color:white;box-shadow:3px 3px #eeeeee;border-radius:5px;">
                                    <field name="serial_no"/>
                                </div>
                            </div>
                            <br/>
                            <br/>
                            <div class="pull-left"
                                    style="color:white;background-color:#fe2c25;box-shadow:3px 3px #eeeeee;border-radius:5px;">
                                <span>Current Hourmeter:
                                    <field name="current_hour"/>
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="forecast_hour_meter_maintenance_view_action" model="ir.actions.act_window">   
        <field name="name">Forecast Hour Meter Maintenance</field>      
        <field name="res_model">forecast.hour.meter.maintenance</field>     
        <field name="view_mode">kanban,tree,form</field>      
            <field name="help" type="html">     
            <p class="oe_view_nocontent_create">no career transition data     

            </p> 
        <field name="context">{'create': False}</field>      
        </field>  
    </record>

    <menuitem
        id="forecast_parent"
        name="Forecast Maintenance Plans"
        parent="maintenance.maintenance_reporting"
        sequence="26"/>

    <menuitem
            id="forecast_hour_meter_maintenance_view_menu"
            action="forecast_hour_meter_maintenance_view_action"
            name="Forecast Hour Meter Maintenance"
            parent="equip3_asset_fms_report.forecast_parent"
            sequence="1"/>

</odoo>
