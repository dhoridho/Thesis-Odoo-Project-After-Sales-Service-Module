<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="forecast_hour_meter_maintenance_line_tree_view" model="ir.ui.view">
        <field name="name">Forecast Hour Meter Maintenance line</field>
        <field name="model">forecast.hour.meter.maintenance.line</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0">
                <field name="name"/>
                <field name="state"/>
                <field name="last_date"/>
                <field name="current_hour"/>
                <field name="next_treshold"/>
                <field name="cummulative_hour"/>
                <field name="unit"/>
                <field name="monthly"/>
                <field name="difference"/>
                <field name="forecast_id" invisible="1"/>
            </tree>
        </field>
    </record>

</odoo>
