<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_preventive_advanced_main">
        <t t-call="equip3_asset_fms_report.template_picking_advance_layout">
            <t t-set="o" t-value="o.with_context({'lang':o.user_id.partner_id.lang})" />
            <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color" />
            <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color" />
            <t t-set="company_color" t-value="o.company_id and o.company_id.company_color" />
            <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color" />
            <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color" />
            <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color" />
            <t t-set="text_color" t-value="o.company_id and o.company_id.text_color" />
            <div class="page"
                t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                <div class="oe_structure" />
                <div width="100%">
                    <div style="padding:0px 20px 20px 20px; margin:0; background:#fff; line-height:20px;" width="100%">
                        <div t-attf-style="overflow:auto;border-top:1px solid #000000;">
                         <div style="background-color:#f2f2f2; margin: 15px; overflow: auto; margin-bottom: 20px;">
                            <div align="left" style="float:left;padding:15px 0px 15px 0px;line-height:18px;"
                                valign="top">
                                <table border="0" cellpadding="0" cellspacing="0"
                                    t-attf-style="color: #{theme_text_color or '#000000'}; border-collapse: collapse; background-color: #4D4D4D; width: 380px;">
                                    <tr>
                                        <td t-attf-style="padding:9px 25px; font-weight:bold;">
                                            <span>Maintenance Plan</span>
                                        </td>
                                        <td t-attf-style="text-align:right;padding:9px 15px;">
                                            <span t-field="o.name" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" style="background-color:#f2f2f2; height:4px;" />
                                    </tr>
                                    <tr>
                                        <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                            <strong>Customer</strong>
                                        </td>
                                        <td t-attf-style="text-align:right; padding:5px 15px;">
                                            <span t-field="o.partner_id" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                            <strong>Facility Area</strong>
                                        </td>
                                        <td t-attf-style="text-align:right; padding:5px 15px;">
                                            <span t-field="o.facility_area" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                            <strong>Maintenance Team</strong>
                                        </td>
                                        <td t-attf-style="text-align:right; padding:5px 15px;">
                                            <span t-field="o.maintenance_team_id" />
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div align="right" style="float:right;padding:15px 25px 25px 25px;" valign="top">
                                <table border="0" cellpadding="0" cellspacing="0"
                                    t-attf-style="color: #{theme_text_color or '#000000'}; border-collapse: collapse; background-color: #4D4D4D; width: 310px;">
                                    <tr>
                                        <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                            <strong>Maintenance Assignation Type</strong>
                                        </td>
                                        <td t-attf-style="text-align:right; padding:5px 15px;">
                                            <span t-field="o.m_assignation_type" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                            <strong>Asset Category</strong>
                                        </td>
                                        <td t-attf-style="text-align:right; padding:5px 15px;">
                                            <span t-field="o.maintenance_category_ids" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                            <strong>Start Date</strong>
                                        </td>
                                        <td t-attf-style="text-align:right; padding:5px 15px;">
                                            <span t-field="o.start_date" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                            <strong>End Date</strong>
                                        </td>
                                        <td t-attf-style="text-align:right; padding:5px 15px;">
                                            <span t-field="o.end_date" />
                                        </td>
                                    </tr>
                                </table>
                            </div>
                         </div>
                        </div>
                        <div>
                            <p
                                t-attf-style="border-bottom:1px solid #000000; padding:0px 0px 10px 0px; width:100%;" />
                        </div>
                        <div align="left" style="padding:20px 0px 0 0; font-weight:bold; width:100%;" valign="top">
                            <table cellpadding="0" cellspacing="0" class="table"
                                style="border:0.5px solid #ccc;  border-collapse: collapse; padding:15px; border-bottom:1px solid #ccc;"
                                width="100%">
                                <thead>
                                    <tr
                                        t-attf-style="page-break-inside: avoid !important;background-color: #4D4D4D; color: #{theme_text_color or '#000000'};">
                                        <th align="center"
                                            t-attf-style="padding:5px 10px; border:1px solid #4D4D4D; !important; border-right:0px solid #4D4D4D; !important; font-weight:bold;"
                                            width="25%" class="text-center">Asset</th>
                                        <th align="center"
                                            t-attf-style="padding:5px 10px; border:1px solid #4D4D4D; !important; border-right:0px solid #4D4D4D; !important; font-weight:bold;"
                                            width="25%">Details</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.task_check_list_ids"
                                        t-as="package">
                                        <t t-if="package_odd">
                                            <t t-set="po_color" t-value="o.company_id.even_party_color" />
                                        </t>
                                        <t t-if="package_even">
                                            <t t-set="po_color" t-value="o.company_id.odd_party_color" />
                                        </t>
                                        <tr
                                            t-att-style="'page-break-inside: avoid !important;background-color: '+ po_color + '; color: ' + text_color ">
                                            <t t-set="package" t-value="package.with_context({'equipment_id':o.id})" />
                                            <td align="center" class="text-center"
                                                t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                <span t-field="package.equipment_id.name" /><t t-if="package.equipment_id.serial_no"> [<t t-esc="package.equipment_id.serial_no"/>]</t></td>
                                            <td align="center" class="text-center"
                                                t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                <span t-field="package.task" /></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                            <table cellpadding="0" cellspacing="0" class="table"
                                style="border:0.5px solid #ccc;  border-collapse: collapse; padding:15px; border-bottom:1px solid #ccc;"
                                width="100%">
                                <thead>
                                    <tr
                                        t-attf-style="page-break-inside: avoid !important;background-color: #4D4D4D; color: #{theme_text_color or '#000000'};">
                                        <th align="center"
                                            t-attf-style="padding:5px 10px; border:1px solid #4D4D4D; !important; border-right:0px solid #4D4D4D; !important; font-weight:bold;"
                                            width="25%">Product Material</th>
                                        <th align="center"
                                            t-attf-style="padding:5px 10px; border:1px solid #4D4D4D; !important; border-right:0px solid #4D4D4D; !important; font-weight:bold;"
                                            width="25%" class="text-center">Quantity</th>
                                        <th align="center"
                                            t-attf-style="padding:5px 10px; border:1px solid #4D4D4D; !important; border-right:0px solid #4D4D4D; !important; font-weight:bold;"
                                            width="25%" class="text-center">UOM</th>
                                        <th align="center"
                                            t-attf-style="padding:5px 10px; border:1px solid #4D4D4D; !important; border-right:0px solid #4D4D4D; !important; font-weight:bold;"
                                            width="25%" class="text-center">Notes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.maintenance_materials_list_ids"
                                        t-as="package">
                                        <t t-if="package_odd">
                                            <t t-set="po_color" t-value="o.company_id.even_party_color" />
                                        </t>
                                        <t t-if="package_even">
                                            <t t-set="po_color" t-value="o.company_id.odd_party_color" />
                                        </t>
                                        <tr
                                            t-att-style="'page-break-inside: avoid !important;background-color: '+ po_color + '; color: ' + text_color ">
                                            <t t-set="package" t-value="package.with_context({'product_id':o.id})" />
                                            <td align="center" class="text-center"
                                                t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                <span t-field="package.product_id.display_name" /></td>
                                            <td align="center" class="text-center"
                                                t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                <span t-field="package.product_uom_qty" /></td>
                                            <td align="center" class="text-center"
                                                t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                <span t-field="package.uom_id.name" /></td>
                                            <td align="center" class="text-center"
                                                t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                <span t-field="package.notes" /></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                            <table cellpadding="0" cellspacing="0" class="table"
                                style="border:0.5px solid #ccc;  border-collapse: collapse; padding:15px; border-bottom:1px solid #ccc;"
                                width="100%">
                                <thead>
                                    <tr
                                        t-attf-style="page-break-inside: avoid !important;background-color: #4D4D4D; color: #{theme_text_color or '#000000'};">
                                        <th align="center"
                                            t-attf-style="padding:5px 10px; border:1px solid #4D4D4D; !important; border-right:0px solid #4D4D4D; !important; font-weight:bold;"
                                            width="25%">Product Tools</th>
                                        <th align="center"
                                            t-attf-style="padding:5px 10px; border:1px solid #4D4D4D; !important; border-right:0px solid #4D4D4D; !important; font-weight:bold;"
                                            width="25%" class="text-center">Quantity</th>
                                        <th align="center"
                                            t-attf-style="padding:5px 10px; border:1px solid #4D4D4D; !important; border-right:0px solid #4D4D4D; !important; font-weight:bold;"
                                            width="25%" class="text-center">UOM</th>
                                        <th align="center"
                                            t-attf-style="padding:5px 10px; border:1px solid #4D4D4D; !important; border-right:0px solid #4D4D4D; !important; font-weight:bold;"
                                            width="25%" class="text-center">Notes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.tools_materials_list_ids"
                                        t-as="package">
                                        <t t-if="package_odd">
                                            <t t-set="po_color" t-value="o.company_id.even_party_color" />
                                        </t>
                                        <t t-if="package_even">
                                            <t t-set="po_color" t-value="o.company_id.odd_party_color" />
                                        </t>
                                        <tr
                                            t-att-style="'page-break-inside: avoid !important;background-color: '+ po_color + '; color: ' + text_color ">
                                            <t t-set="package" t-value="package.with_context({'product_id':o.id})" />
                                            <td align="center" class="text-center"
                                                t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                <span t-field="package.product_id.display_name" /></td>
                                            <td align="center" class="text-center"
                                                t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                <span t-field="package.product_uom_qty" /></td>
                                            <td align="center" class="text-center"
                                                t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                <span t-field="package.uom_id.name" /></td>
                                            <td align="center" class="text-center"
                                                t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                <span t-field="package.notes" /></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                        <div align="right">
                            <!--<t t-call="equip3_asset_fms_report.report_signature" />-->
                        </div>
                    </div>
                </div>
                <div class="oe_structure" />
            </div>
        </t>
    </template>
    <template id="report_preventive_maintenance_plan">
        <t t-call="web.html_container">
            <t t-as="o" t-foreach="docs">
                <t t-call="equip3_asset_fms_report.report_preventive_advanced_main" t-lang="o.user_id.partner_id.lang" />
            </t>
        </t>
    </template>
</odoo>