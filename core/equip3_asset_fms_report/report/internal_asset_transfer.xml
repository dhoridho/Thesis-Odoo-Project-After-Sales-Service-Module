<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_asset_advanced_main">
        <t t-call="equip3_asset_fms_report.template_picking_advance_layout">
            <t t-set="o" t-value="o.with_context({'lang':o.user_id.partner_id.lang})" />
            <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color" />
            <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color" />
            <t t-set="company_color" t-value="o.company_id and o.company_id.company_color" />
            <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color" />
            <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color" />
            <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color" />
            <t t-set="text_color" t-value="o.company_id and o.company_id.text_color" />
            <div class="page"
                t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                <div class="oe_structure" />
                <t t-call="general_template.templates_watermark" />
                <div width="100%">
                    <div style="padding:0px 20px 20px 20px; margin:0; background:#fff; line-height:20px;" width="100%">
                        <div t-attf-style="overflow:auto;border-top:1px solid #{theme_color or '#ececec'};">
                            <div align="left" style="float:left;padding:15px 0px 15px 0px;line-height:18px;"
                                valign="top">
                                <p t-attf-style="text-transform:capitalize; color: #{theme_color or '#ffffff'}; font-weight:bold;margin:0; margin-bottom:5px;padding-top: 10px;">Asset Transfer: </p>
                                <p t-attf-style="text-transform:capitalize; padding:0px; margin:0; color: #51565b;">
                                    <span t-field="o.description" />
                                </p>
                                
                            </div>
                            <div align="right" style="float:right;padding:15px 25px 25px 25px;" valign="top">
                                <table border="0" cellpadding="0" cellspacing="0"
                                    t-attf-style="color: #{theme_text_color or '#000000'}; border-collapse: collapse; background-color: #{theme_color or '#000000'}; width: 350px;">
                                    <tr>
                                        <td t-attf-style="padding:9px 25px; font-weight:bold;">
                                            <span>Internal Asset No # </span>
                                        </td>
                                        <td t-attf-style="text-align:right; font-weight:bold;padding:9px 15px;">
                                            <span t-field="o.name" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" style="background-color:#f2f2f2; height:4px;" />
                                    </tr>
                                    <tr>
                                        <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                            <strong>Create By</strong>
                                        </td>
                                        <td t-attf-style="text-align:right; padding:5px 15px;">
                                            <span t-field="o.created" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                            <strong>Create Date</strong>
                                        </td>
                                        <td t-attf-style="text-align:right; padding:5px 15px;">
                                            <span t-field="o.created_date" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                            <strong>Source Location</strong>
                                        </td>
                                        <td t-attf-style="text-align:right;padding:5px 15px;">
                                            <span t-field="o.source" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                            <strong>Destination Location</strong>
                                        </td>
                                        <td t-attf-style="text-align:right;padding:5px 15px;">
                                            <span t-field="o.destloc" />
                                        </td>
                                    </tr>

                                </table>
                            </div>
                        </div>
                        <div>
                            <p
                                t-attf-style="border-bottom:1px solid #{theme_color or '#ececec'}; padding:0px 0px 10px 0px; width:100%;" />
                        </div>
                        <div align="left" style="padding:20px 0px 0 0; font-weight:bold; width:100%;" valign="top">
                            <table cellpadding="0" cellspacing="0" class="table"
                                style="border:0.5px solid #ccc;  border-collapse: collapse; padding:15px; border-bottom:1px solid #ccc;"
                                width="100%">
                                <thead>
                                    <tr
                                        t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'};">
                                        <th align="center"
                                            t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;"
                                            width="5%" class="text-center">No</th>
                                        <th align="center"
                                            t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;"
                                            width="25%" class="text-center">Asset</th>
                                        <!--<th align="center"
                                            t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;"
                                            width="10%">Quantity</th>-->
                                        <th align="center"
                                            t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;"
                                            width="25%" class="text-center">Source Location</th>
                                        <th align="center"
                                            t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;"
                                            width="25%" class="text-center">Destination Location</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.asset_ids"
                                        t-as="package">
                                        <t t-if="package_odd">
                                            <t t-set="po_color" t-value="o.company_id.even_party_color" />
                                        </t>
                                        <t t-if="package_even">
                                            <t t-set="po_color" t-value="o.company_id.odd_party_color" />
                                        </t>
                                        <tr
                                            t-att-style="'page-break-inside: avoid !important;background-color: '+ po_color + '; color: ' + text_color ">
                                            <t t-set="package" t-value="package.with_context({'asset_id':o.id})" />
                                            <td align="center" class="text-center"
                                                t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                <span t-field="package.no_asset_sequence" /></td>
                                            <td align="center" class="text-center"
                                                t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                <span t-field="package.asset_id" /><t t-if="package.asset_id.serial_no"> [<t t-esc="package.asset_id.serial_no"/>]</t></td>
                                            <!--<td align="center" class="text-center"
                                                t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                <span t-field="package.qty" /></td>-->
                                            <td align="center" class="text-center"
                                                t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                <span t-field="package.source" /></td>
                                            <td align="center" class="text-center"
                                                t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                                <span t-field="package.dest" /></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                        <!--<div>
                            <p t-if="o.state in ['draft', 'waiting', 'confirmed'] or no_reserved_product"
                                class="fa fa-exclamation-triangle">
                                All products could not be reserved. Click on the "Check Availability" button to try to
                                reserve products
                            </p>
                        </div>-->
                        <div align="right">
                            <t t-call="equip3_asset_fms_report.report_signature" />
                        </div>
                    </div>
                </div>
                <div class="oe_structure" />
            </div>
        </t>
    </template>

    <template id="report_internal_asset">
        <t t-call="web.html_container">
            <t t-as="o" t-foreach="docs">
                <t t-call="equip3_asset_fms_report.report_asset_advanced_main" t-lang="o.user_id.partner_id.lang" />
            </t>
        </t>
    </template>
</odoo>