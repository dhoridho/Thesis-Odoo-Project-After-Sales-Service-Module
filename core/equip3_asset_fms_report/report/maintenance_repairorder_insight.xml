<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- maintenance.repairorder.insight pivot view -->
        <record id="maintenance_repairorder_insight_view_pivot" model="ir.ui.view">
            <field name="name">maintenance.repairorder.insight.view.pivot</field>
            <field name="model">maintenance.repairorder.insight</field>
            <field name="arch" type="xml">
                <pivot string="Pivot Description" disable_linking="True">
                    <field name="equipment_id" type="row"/>
                    <field name="name"/>
                    <field name="time_in_progress" type="measure"/>
                    <field name="time_post" type="measure"/>
                    <field name="total_time" type="measure"/>
                    <field name="cost" type="measure"/>
                    <field name="mro_count" type="measure"/>
                    <field name="part_equipment_id"/>
                    <field name="product_id"/>
                    <field name="types"/>
                </pivot>
            </field>
        </record>

        <!-- maintenance.repairorder.insight action window -->
        <record id="maintenance_repairorder_insight_action" model="ir.actions.act_window">
            <field name="name">Repair Order Cost report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">maintenance.repairorder.insight</field>
            <field name="view_mode">pivot</field>
        </record>

        <menuitem
            id="maintenance_repairorder_insight_report_menu"
            name="Repair Order Cost Report"
            action="maintenance_repairorder_insight_action"
            parent="maintenance.maintenance_reporting"
            sequence="2"/>
    </data>
</odoo>