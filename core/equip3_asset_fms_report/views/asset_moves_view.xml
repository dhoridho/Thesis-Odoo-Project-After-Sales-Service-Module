<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--  asset moves kanban view      -->
        <record id="asset_moves_kanban_view" model="ir.ui.view">
            <field name="name">asset.moves.kanban.view</field>
            <field name="model">asset.moves</field>
            <field name="type">kanban</field>
            <field name="arch" type="xml">
                <kanban create="0" edit="0">
                    <field name="asset_id"/>
                    <field name="owner_id"/>
                    <field name="held_by_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div style="box-shadow:2px 2px #eeeeee;">
                                    <div class="pull-left" style="color:#1a73e8;border-radius:5px;">
                                        <field name="asset_id"/>
                                    </div>
                                    <div class="pull-right"
                                         style="background-color:white;box-shadow:3px 3px #eeeeee;border-radius:5px;">
                                        <span>Owner:
                                            <field name="owner_id"/>
                                        </span>
                                    </div>
                                </div>
                                <br/>
                                <br/>
                                <div class="pull-right"
                                     style="color:white;background-color:#fe2c25;box-shadow:3px 3px #eeeeee;border-radius:5px;">
                                    <span>Held by:
                                        <field name="held_by_id"/>
                                    </span>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- asset moves tree view -->
        <record id="asset_moves_view_tree" model="ir.ui.view">
            <field name="name">asset.moves.view.tree</field>
            <field name="model">asset.moves</field>
            <field name="arch" type="xml">
                <tree create="0" edit="0">
                    <field name="asset_id"/>
                    <field name="owner_id"/>
                    <field name="held_by_id"/>
                </tree>
            </field>
        </record>

        <!-- asset moves form view -->
        <record id="asset_moves_form_view" model="ir.ui.view">
            <field name="name">asset.moves.form.view</field>
            <field name="model">asset.moves</field>
            <field name="arch" type="xml">
                <form string="Asset Moves" create="0" edit="0">
                    <sheet>
                        <field name="asset_moves_ids">
                            <tree editable="bottom" create="0" edit="0">
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="held_by_id"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- asset moves action window -->
        <record id="asset_moves_action" model="ir.actions.act_window">
            <field name="name">Asset Moves</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">asset.moves</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>
        <menuitem id="asset_moves_menu" name="Asset Moves" action="asset_moves_action"
                  parent="maintenance.maintenance_reporting" sequence="16"/>
    </data>
</odoo>