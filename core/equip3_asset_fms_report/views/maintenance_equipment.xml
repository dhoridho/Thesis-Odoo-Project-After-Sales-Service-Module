<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- equip3_asset_fms_masterdata.maintenance_asset_view_form' -->

    <record id="asset_equipment_inherit_view_form_maintenance_plan" model="ir.ui.view">
        <field name="name">asset.equipment.inherit.view.form.maintenance.plan</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="equip3_asset_fms_masterdata.asset_equipment_inherit_view_form_frequency"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[last()]" position="after">
                <page name="asset_forecast" string="Asset Forecast">
                    <field name="forecast_preventive_ids" nolabel="1">
                        <tree>
                            <field name="name"/>
                            <field name="team_id"/>
                            <field name="start_date"/>
                            <field name="next_maintenance_date"/>
                            <field name="last_date"/>
                            <field name="frequency"/>
                        </tree>
                    </field>
                    <field name="hour_meter_line_ids" nolabel="1">
                        <tree>
                            <field name="name" string="Hour Maintenance Plan"/>
                            <field name="current_hour"/>
                            <field name="next_treshold"/>
                            <field name="unit"/>
                            <field name="difference"/>
                        </tree>
                    </field>
                    <field name="odo_meter_line_ids" nolabel="1">
                        <tree>
                            <field name="name" string="Odometer Maintenance Plan"/>
                            <field name="current_odo"/>
                            <field name="next_treshold"/>
                            <field name="unit"/>
                            <field name="difference"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="vehicle_equipment_inherit_view_form_maintenance_plan" model="ir.ui.view">
        <field name="name">vehicle.equipment.inherit.view.form.maintenance.plan</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="equip3_asset_fms_masterdata.vehicle_equipment_inherit_view_form_frequency"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[last()]" position="after">
                <page name="asset_forecast" string="Vehicle Forecast">
                    <field name="forecast_preventive_ids" nolabel="1">
                        <tree>
                            <field name="name"/>
                            <field name="team_id"/>
                            <field name="start_date"/>
                            <field name="next_maintenance_date"/>
                            <field name="last_date"/>
                            <field name="frequency"/>
                        </tree>
                    </field>
                    <field name="hour_meter_line_ids" nolabel="1">
                        <tree>
                            <field name="name" string="Hour Maintenance Plan"/>
                            <field name="current_hour"/>
                            <field name="next_treshold"/>
                            <field name="unit"/>
                            <field name="difference"/>
                        </tree>
                    </field>
                    <field name="odo_meter_line_ids" nolabel="1">
                        <tree>
                            <field name="name" string="Odometer Maintenance Plan"/>
                            <field name="current_odo"/>
                            <field name="next_treshold"/>
                            <field name="unit"/>
                            <field name="difference"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
