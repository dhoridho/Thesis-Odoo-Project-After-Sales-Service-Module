        <record id="send_email_applicant_refuse" model="ir.cron">
            <field name="name">Send Email Applicant Refuse</field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="nextcall" eval="datetime.now() + (datetime.now(pytz.timezone('Asia/Jakarta')).replace(hour=5, minute=00, second=00) - datetime.now(pytz.timezone('Asia/Jakarta'))) % timedelta(hours=24)"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="model_hr_applicant"/>
            <field name="state">code</field>
            <field name="doall" eval="True"/>
            <field name="code">model.send_mail_refuse()</field>
        </record>



