            <field name="numbercall">-1</field>
            <field name="model_id" ref="model_applicant_schedulling_meeting_result"/>
            <field name="state">code</field>
            <field name="doall" eval="True"/>
            <field name="code">model._cron_reminder_schedule()</field>
        </record>



