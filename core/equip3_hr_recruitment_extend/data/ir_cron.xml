        </record>

         <!-- Scheduler for Auto Follow Up Approver-->
        <record forcecreate="True" id="ir_cron_recruitment_auto_follow_up_approver" model="ir.cron">
            <field name="name">Auto Follow Up Recruitment Change Request</field>
            <field name="model_id" ref="model_hr_offering_request"/>
            <field name="state">code</field>
            <field name="code">model.get_auto_follow_up_approver()</field>
            <field eval="False" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall" />
        </record>

        <record id="update_applicant_test_result_score" model="ir.cron">
            <field name="name">Update Applicant Test Result Score</field>
            <field name="active" eval="False"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="nextcall" eval="datetime.now() + (datetime.now(pytz.timezone('Asia/Jakarta')).replace(hour=00, minute=00, second=00) - datetime.now(pytz.timezone('Asia/Jakarta'))) % timedelta(hours=24)"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="model_survey_user_input"/>
            <field name="state">code</field>
            <field name="doall" eval="False"/>
            <field name="code">model.update_applicant_test_result_score()</field>
        </record>

        <record id="update_fullfillment_data_manpower_requisition" model="ir.cron">
            <field name="name">Manpower Requisition Update Fullfillment Data</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="nextcall" eval="datetime.now() + (datetime.now(pytz.timezone('Asia/Jakarta')).replace(hour=1, minute=00, second=00) - datetime.now(pytz.timezone('Asia/Jakarta'))) % timedelta(hours=24)"/>
