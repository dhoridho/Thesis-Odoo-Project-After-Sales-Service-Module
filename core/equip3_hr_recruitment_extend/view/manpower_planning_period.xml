<odoo>
    <data>
    
    
        <record id="manpower_planning_form_period_view" model="ir.ui.view">
            <field name="name">Manpower Plan Period</field>
            <field name="model">manpower.planning.period</field>
            <field name="arch" type="xml">
                <form string="Manpower Plan Period" class="menu_hr_recruitment_sticky">
                    <sheet>
                        
                            <group>
                                <group>
                                    <field name="name" readonly="1" force_save="1"/>
                                    <field name="mpp_year" required="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}" />
                                    <field name="mpp_type" required="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                    <field name="start_period" required="1"/>
                                    <field name="end_period" required="1"/>
                                    <field name="create_uid" readonly="1" force_save="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                    <field name="create_date" />
                                </group>
                                
                            </group>
    
                            
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
    
            </field>
        </record>
    
     <record id="manpower_planning_type_period_view" model="ir.ui.view">
            <field name="name">Manpower Plan Period</field>
            <field name="model">manpower.planning.period</field>
            <field name="arch" type="xml">
                <tree string="Manpower Plan Period" class="menu_hr_recruitment_sticky">
                    <field name="name"/>
                    <field name="mpp_year" />
                    <field name="mpp_type" />
                    <field name="start_period" />
                    <field name="end_period" />
                </tree>
            </field>
        </record>


        <record id="view_manpower_planning_period_filter" model="ir.ui.view">
            <field name="name">manpower.planning.period.search</field>
            <field name="model">manpower.planning.period</field>
            <field name="arch" type="xml">
                <search string="Search Manpower Planning Period">
                    <field name="name" />
                   <group name="group_by" string="Group By">
                       <filter name="mpp_type" string="MPP Type" domain="[]" context="{'group_by' : 'mpp_type'}" />
                       <filter name="year" string="Year" domain="[]" context="{'group_by' : 'start_period:year'}" />
                   </group>
               </search>
            </field>
        </record>
    
     <record id="manpower_planning_period_action" model="ir.actions.act_window">
            <field name="name">Manpower Plan Period</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">manpower.planning.period</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_mpp_type':1,'search_default_year':1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                  Create a new Manpower Plan Period
                </p>
            </field>
        </record>


        <menuitem id="man_power_period_menu_id"
                  name="Manpower Plan Period"
                  action="manpower_planning_period_action"
                  parent="man_power_root_menu_id"
                  groups="equip3_hr_accessright_settings.equip3_group_hr_recruitment_manager"
        />
        
    
    </data>
    
    
    </odoo>