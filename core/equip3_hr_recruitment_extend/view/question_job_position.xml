<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="question_job_position_form_view" model="ir.ui.view">
            <field name="name">queestion.job.form</field>
            <field name="model">question.job.position</field>
            <field name="priority" eval="89"/>
            <field name="arch" type="xml">
                <form string="ModelTitle">
                    <sheet>
                        <group>
                            <group>
                                <field name="seq" invisible="1"/>
                                <field name="question" 
                                options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"
                                attrs="{'readonly':[('global_question','=',True)],'invisible':[('global_question','=',False)]}" required="1" force_save="1"/>
                                <field name="specific_question" 
                                options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"
                                string="Question"
                                attrs="{'invisible':[('global_question','=',True)],'required':[('global_question','=',False)]}"  domain="[('global_question','=',False)]"/>
                                <field name="question_string" invisible="1" force_save="1"/>
                                <field name="modify_question" />
                                <field name="global_question" invisible="1"/>
                                <field name="question_type" required="1" attrs="{'readonly':[('is_hide','=',True)]}" force_save="1"/>
                                <label for="range_from" string="Range"
                                       attrs="{'invisible':[('question_type','!=','quantitative')]}"/>
                                <div class="d-flex" attrs="{'invisible':[('question_type','!=','quantitative')]}">
                                    <field name="range_from"/>
                                    <span class="o_form_label mx-3"> to </span>
                                    <field name="range_to"/>
                                </div>
                                <field name="mandatory" attrs="{'readonly':[('question_string','=','What is your name?')]}"/>
                                <field name="show_in_job_portal" attrs="{'readonly':['|',('question','=',True),('question_string','=','What is your name?')]}"/>
                                <field name="weightage" attrs="{'readonly':[('question_type','=','none')]}"/>
                                <field name="weightage_percentage" invisible="1"/>
                                <field name="total_current_weightage" readonly="1" widget="percentage"/>
                                <field name="remarks"/>
                                <field name="is_hide" invisible="1"/>
                                <field name="is_readonly_tree" invisible="1"/>
                                <field name="is_on_create_job" invisible="1"/>
                                <field name="is_on_create_show" invisible="1"/>
                            </group>

                        </group>
                        <notebook>

                            <page string="Answer" attrs="{'invisible':[('question_type','!=','qualitative')]}">
                                <div>
                                    <!-- <label for="answers_masking_ids" string="Answer"
                                           style="font-size: 15px; padding-bottom: 10px" attrs="{'invisible':[('is_on_create_show','!=',True)]}" />
                                    <field name="answers_masking_ids"  force_save="1" attrs="{'invisible':[('is_on_create_show','!=',True)]}" >
                                        <tree editable="bottom" create="0" delete="0">
                                            <field name="answer"/>
                                            <field name="is_correct"/>
                                        </tree>
                                    </field> -->

                                    <label for="answers_ids" string="Answer"
                                           style="font-size: 15px; padding-bottom: 10px"   />
                                    <field name="answers_ids"  force_save="1"  >
                                        <tree editable="bottom" create="0" delete="0">
                                            <field name="answer"/>
                                            <field name="is_correct"/>
                                        </tree>
                                    </field>
                                </div>


                            </page>

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="question_job_position_form_view2" model="ir.ui.view">
            <field name="name">queestion.job.form.2</field>
            <field name="model">question.job.position</field>
            <field name="priority" eval="89"/>
            <field name="arch" type="xml">
                <form string="ModelTitle">
                    <sheet>
                        <group>
                            <group>
                                <field name="question" domain="[('global_question','=',False)]"/>
                                <field name="question_type" required="1" attrs="{'readonly':[('is_hide','=',True)]}"/>

                                <label for="range_from" string="Range"
                                       attrs="{'invisible':[('question_type','!=','quantitative')]}"/>

                                <div class="d-flex" attrs="{'invisible':[('question_type','!=','quantitative')]}">
                                    <field name="range_from"/>
                                    <span class="o_form_label mx-3 "> to </span>
                                    <field name="range_to"/>
                                </div>
                                <field name="is_readonly_tree" invisible="1"/>
                                <field name="mandatory_specific_question" attrs="{'invisible':[('is_hide','=',True)]}"/>
                                <field name="show_in_job_portal_specific_question"/>
                                <field name="remarks"/>
                                <field name="is_hide" invisible="1"/>
                                <field name="is_readonly_tree" invisible="1"/>
                            </group>
                        </group>
                        <notebook>

                            <page string="Answer" attrs="{'invisible':[('question_type','!=','qualitative')]}">
                                <div>
                                    <label for="answers_ids" string="Answer"
                                           style="font-size: 15px; padding-bottom: 10px"/>
                                    <field name="answers_ids"  >
                                        <tree editable="bottom">
                                            <field name="answer"/>
                                            <field name="is_correct"/>
                                        </tree>
                                    </field>
                                </div>


                            </page>

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="question_job_position_tree_view" model="ir.ui.view">
            <field name="name">question.job.position.tree.view</field>
            <field name="model">question.job.position</field>
            <field name="arch" type="xml">
                <tree create="1" delete="1">
                    <field name="seq" widget="handle"/>
                    <field name="question" required="1" domain="[('global_question','=',True)]"/>
                    <field name="modify_question" />
                    <field name="global_question" />
                    <field name="question_type" invisible="1"/>
                    <field name="mandatory"/>
                    <field name="show_in_job_portal"/>
                    <!--          <field name="min_qualification" attrs="{'invisible':[('question_type','in',('qualitative','quantitative'))]}"/>-->
                    <field name="weightage_percentage" widget="percentage" attrs="{'readonly':[('question_type','=','none')]}" sum="Total Weightage Percentage"/>
                    <field name="total_current_weightage" widget="percentage" style="color:#A9A9A9;" invisible="1"/>
                    <field name="remarks"/>
                    <field name="global_question" invisible="1"/>
                    <field name="is_on_create_job" invisible="1"/>
                    <field name="is_on_create_show" invisible="1"/>
                    <field name="question_type" invisible="1"/>
                    <field name="range_from" invisible="1"/>
                    <field name="range_to" invisible="1"/>
                    <!-- <field name="answers_ids" invisible="0" widget="many2many_tags"/> -->
                    
                    <!-- <field name="answers_masking_ids" invisible="1" >
                        <tree >
                            <field name="answer"/>
                            <field name="is_correct"/>
                            
                        </tree>
                    </field> -->
                    <!-- <field name="answers_ids" invisible="0"  /> -->
                </tree>
            </field>
        </record>

        <record id="question_job_position_tree_view2" model="ir.ui.view">
            <field name="name">question.job.position.tree.view2</field>
            <field name="model">question.job.position</field>
            <field name="arch" type="xml">
                <tree default_order='seq'>
                    <field name="seq" widget="handle"/>
                    <field name="question" required="1" domain="[('global_question','=',False)]"/>
                    <field name="question_type" invisible="1"/>
                    <field name="mandatory_specific_question"/>
                    <field name="show_in_job_portal_specific_question"/>
                    <!--                    <field name="min_qualification"/>-->
                    <field name="remarks"/>
                    <field name="global_question" invisible="1"/>
                    <field name="question_type" invisible="1"/>
                    <field name="answers_ids" invisible="1" >
                        <tree editable="bottom">
                            <field name="answer"/>
                            <field name="is_correct"/>
                        </tree>
                    </field>
                </tree>
            </field>
        </record>


    </data>
</odoo>