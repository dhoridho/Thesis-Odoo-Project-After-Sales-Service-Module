<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="website_hr_recruitment_detail" inherit_id="website_hr_recruitment.detail">
            <xpath expr="//h5[@t-field='job.address_id']" position="after">
                <h5 t-if="job.description">
                    <b>Job Description</b>
                    <br/>
                    <br/>
                    <p t-field="job.description" style="overflow-wrap: break-word;"/>
                </h5>
            </xpath>
             <xpath expr="//h5[@t-field='job.address_id']" position="replace">
                <h5 class="font-weight-light" t-field="job.custom_work_location_id.name"/>
             </xpath>
        </template>
    </data>
</odoo>