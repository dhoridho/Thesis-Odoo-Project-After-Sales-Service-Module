<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="action_hr_job_action" model="ir.actions.act_window">
            <field name="name">Job Positions</field>
            <field name="res_model">hr.job</field>
            <field name="view_mode">kanban,form</field>
            <field name="view_id" ref="hr_recruitment.view_hr_job_kanban"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Ready to recruit more efficiently?
                </p>
                <p>
                    Let's create a job position.
                </p>
            </field>
        </record>


        <record id="hr_recruitment.action_hr_job" model="ir.actions.server">
            <field name="name">Job Positions</field>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="model_id" ref="model_hr_job"/>
            <field name="code">action = model.get_menu()</field>
        </record>

        <menuitem
            name="By Job Positions"
            parent="hr_recruitment.menu_crm_case_categ0_act_job"
            id="hr_recruitment.menu_hr_job_position"
            action="hr_recruitment.action_hr_job" sequence="1"/>

        <record model="ir.actions.server" id="hr_recruitment.crm_case_categ0_act_job">
            <field name="name">Applications</field>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="model_id" ref="model_hr_applicant"/>
            <field name="code">action = model.get_all_menu()</field>
        </record>

        <menuitem
            name="All Applications"
            parent="hr_recruitment.menu_crm_case_categ0_act_job"
            id="hr_recruitment.menu_crm_case_categ_all_app"
            action="hr_recruitment.crm_case_categ0_act_job" sequence="2"/>

        <record model="ir.actions.server" id="action_hr_job_applications">
            <field name="name">Applications</field>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="model_id" ref="model_hr_applicant"/>
            <field name="code">action = model.get_menu()</field>
        </record>

    </data>
</odoo>
