<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">

      <record id="past_experience_view_form" model="ir.ui.view">
            <field name="name">past_experience.view.form</field>
            <field name="model">hr.applicant.past.experience</field>
            <field name="arch" type="xml">
                <form string="Past Experience">
                    <sheet>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="total_working_experience" />
                            <field name="total_working_only_years" invisible="1"/>
                            <field name="is_currently_work_here"/>
                            <field name="company_name" />
                            <field name="position"/>
                            <field name="job_descriptions"/>
                            <field name="reason_for_leaving"/>
                            <field name="salary"/>
                            <field name="company_telephone_number" style="padding-left: 15px !important;"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    
        
    
    </data>
    

</odoo>
