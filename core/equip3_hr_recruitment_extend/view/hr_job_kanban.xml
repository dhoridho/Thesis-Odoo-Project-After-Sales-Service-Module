<odoo>
    <data>



        <record id="action_view_hr_job_applicant_act_window" model="ir.actions.act_window">
            <field name="name">Applications</field>
            <field name="res_model">hr.applicant</field>
            <field name="search_view_id" ref="hr_recruitment.hr_applicant_view_search_bis"/>
            <field name="view_mode">kanban,tree,form,graph,calendar,pivot</field>
        </record>

        <record model="ir.ui.view" id="hr_kanban_view_hr_job_inherit">
            <field name="name">Hr Job kanban</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr_recruitment.view_hr_job_kanban"/>
            <field name="arch" type="xml">

                <kanban position="attributes">
                    <attribute name="on_create"></attribute>
                </kanban>
             
                <xpath expr="//templates/t/div/div[@class='container o_kanban_card_content']/t[1]/div/div[1]/button"
                       position="replace">
                       <button class="btn btn-primary" name="%(equip3_hr_recruitment_extend.action_hr_job_applications)d" type="action">
                        <field name="application_count"/> Application
                        </button>
                   
                </xpath>


                <xpath expr="//kanban" position="attributes">
                    <attribute name="js_class">hr_recruitment_kanban</attribute>
                </xpath>
                <xpath expr="//templates/t/div" position="attributes">
                    <attribute name="style">cursor: pointer;</attribute>
                </xpath>

                <xpath expr="//templates/t/div/div[@class='container o_kanban_card_content']/t[1]/div/div[2]" position="after">
                    <div class="col-6" style="font-size: 12px;">
                        <field name="new_application_count"/> New Applications <br/>
                        <field name="no_of_recruitment"/> Expected New Employees <br/>
                        <field name="employee_to_recruit" /> To Recruit
                    </div>
                </xpath>
                
                <xpath expr="//templates/t/div/div[@class='container o_kanban_card_content']/t[1]/div/div[2]" position="attributes">
                    <attribute name="class">d-none</attribute>
                </xpath>

            </field>
        </record>
    </data>
</odoo>