<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_recruitment_approval_matrix_form" model="ir.ui.view">
            <field name="name">hr.recruitment.approval.matrix.form</field>
            <field name="model">hr.recruitment.approval.matrix</field>
            <field name="arch" type="xml">
                <form string="Manpower Approval Matrix">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="apply_to" required="1"/>
                                <field name="employee_ids"
                                       attrs="{'invisible':[('apply_to','!=','by_employee')],'required':[('apply_to','=','by_employee')]}"
                                       widget="many2many_tags"/>
                                <field name="department_ids"
                                       attrs="{'invisible':[('apply_to','!=','by_department')],'required':[('apply_to','=','by_department')]}"
                                       widget="many2many_tags" string="Department"/>
                                <field name="job_ids"
                                       attrs="{'invisible':[('apply_to','!=','by_job_position')],'required':[('apply_to','=','by_job_position')]}"
                                       widget="many2many_tags"/>
                            </group>
                            <group>
                                <!-- <field name="request_user" readonly="1"/> -->
                                <field name="man_power_type" string="Manpower Type" required="1"/>
                                <!-- <field name="approver_type" required="1"/> -->
                                <field name="company_id" readonly="1"/>
                                <field name="create_date"/>
                                <field name="create_uid"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="approval_matrix_line" string="Approver Lines">
                                <field name="approval_matrix_ids" context="{'approval_matrix_ids':approval_matrix_ids}">
                                    <tree editable="bottom">
                                        <field name="sequence" readonly="1" force_save="1"/>
                                        <field name="approver_type" required="1"/>
                                        <field name="company_id" invisible="1"/>
                                        
                                        <field name="approvers" widget="many2many_tags" force_save="1" attrs="{'readonly':[('approver_type','=','by_hierarchy')],'required':[('approver_type','=','specific_approver')]}"/>
                                        <field name="minimum_approver" string="Minimum Approvers" required="1"   force_save="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="hr_recruitment_approval_matrix_search" model="ir.ui.view">
            <field name="name">hr.recruitment.approval.matrix.search</field>
            <field name="model">hr.recruitment.approval.matrix</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="level"/>
                </search>
            </field>
        </record>
        <record id="hr_recruitment_approval_matrix_view" model="ir.ui.view">
            <field name="name">hr.recruitment.approval.matrix.tree</field>
            <field name="model">hr.recruitment.approval.matrix</field>
            <field name="arch" type="xml">
                <tree string="Recruitment Approval Matrix">
                    <field name="name"/>
                    <field name="man_power_type" string="Manpower Type"/>
                    <field name="level"/>
                    <field name="create_uid"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>
        <record id="recruitment_approval_matrix_act_window" model="ir.actions.act_window">
            <field name="name">Manpower Approval Matrix</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.recruitment.approval.matrix</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Recruitment Approval Matrix.
                </p>
            </field>
        </record>
        <menuitem name="Manpower Approval Matrix" id="hr_recruitment_approval_matrix_menu"
                  parent="hr_recruitment.menu_hr_recruitment_configuration"
                  action="recruitment_approval_matrix_act_window" sequence="21" groups="equip3_hr_accessright_settings.equip3_group_hr_recruitment_manager"/>
    </data>


</odoo>
