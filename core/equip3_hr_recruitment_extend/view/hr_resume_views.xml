<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="resume_line_view_form" model="ir.ui.view">
            <field name="name">resume_line_view_form</field>
            <field name="model">hr.resume.line</field>
            <field name="inherit_id" ref="hr_skills.resume_line_view_form"/>
            <field name="arch" type="xml">
                <field name="display_type" position="after">
                    <field name="position" attrs="{'invisible': [('is_experience1', '=', False)]}"/>
                    <field name="salary" attrs="{'invisible': [('is_experience1', '=', False)]}"/>
                    <field name="companytelp_number" attrs="{'invisible': [('is_experience1', '=', False)]}"/>
                    <field name="is_experience1" invisible="1"/>
                    <!-- <field name="test_field"/> -->
                </field>
                <field name="description" position="before">
                    <group>
                        <field name="reason_for_leaving" attrs="{'invisible': [('is_experience1', '=', False)]}"/>
                    </group>
                </field>
                <field name="description" position="replace">
                     <field name="description" placeholder="Description" attrs="{'invisible': [('is_experience1', '=', True)]}"/>
                </field>
                
            </field>
        </record>

        <record id="hr_employee_resume_line_view_form" model="ir.ui.view">
            <field name="name">hr_employee_resume_line_view_form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr_skills.hr_employee_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='resume_line_ids']/tree/field[@name='display_type']"  position="after">
                    <field name="position" invisible="1"/>
                    <field name="salary" invisible="1"/>
                    <field name="companytelp_number" invisible="1"/>
                    <field name="is_experience1" invisible="1"/>
                     <field name="reason_for_leaving" invisible="1"/>
                 
                </xpath>

                
            </field>
        </record>

        
    </data>


</odoo>
