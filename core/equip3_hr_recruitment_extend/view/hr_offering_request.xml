<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_offering_letter_request_form_view" model="ir.ui.view">
            <field name="name">hr.offering.request.form</field>
            <field name="model">hr.offering.request</field>
            <field name="arch" type="xml">
                <form string="Offering Letter Request">
                    <header>
                        <button string="Submit" name="action_submit" type="object"
                                attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button string="Approve" name="wizard_approve" type="object"
                                attrs="{'invisible': ['|', ('is_approver', '=', False),('state', '!=', 'submitted')]}" class="oe_highlight"/>
                        <button string="Reject" name="wizard_reject" type="object"
                            attrs="{'invisible': ['|', ('is_approver', '=', False),('state', '!=', 'submitted')]}" class="oe_highlight"/>
                        <button string="Send by Email" name="send_email_offering" type="object"
                            attrs="{'invisible': ['|',('is_requester','=',False),('state', '!=', 'approved')]}" class="oe_highlight"/>
                        <button string="Send by Whatsapp" name="send_wa_offering" type="object"
                            attrs="{'invisible': ['|',('is_requester','=',False),('state', '!=', 'approved')]}" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,rejected" attrs="{'invisible':[('is_offering_letter_approval_matrix','=',False)]}"/>
                        <!--is_offering_letter_approval_matrix== True condition-->
                        <field name="state1" widget="statusbar" statusbar_visible="draft,approved" attrs="{'invisible':[('is_offering_letter_approval_matrix','!=',False)]}"/>
                    </header>
                    <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_get_offering_line"
                            class="oe_stat_button"
                            icon="fa-file-text-o"
                            type="object">
                            <field name="letter_number" widget="statinfo" string="Offering Letters"/>
                        </button>
                    </div>
                        <div class="oe_title">
                            <h1><field name="sequence"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="name" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="all_applicant" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="apply_to" attrs="{'readonly': [('state', '!=', 'draft')],'required': [('all_applicant', '=', False)],'invisible': [('all_applicant', '=', True)]}"/>
                                <field name="applicant_ids" widget="many2many_tags" options="{'no_open': True, 'no_create': True}" attrs="{'readonly': [('state', '!=', 'draft')],'required': [('apply_to', '=', 'by_applicant')],'invisible': [('apply_to', '!=', 'by_applicant')]}"/>
                                <field name="department_ids" widget="many2many_tags" options="{'no_open': True, 'no_create': True}" attrs="{'readonly': [('state', '!=', 'draft')],'required': [('apply_to', '=', 'by_department')],'invisible': [('apply_to', '!=', 'by_department')]}"/>
                                <field name="job_ids" widget="many2many_tags" options="{'no_open': True, 'no_create': True}" attrs="{'readonly': [('state', '!=', 'draft')],'required': [('apply_to', '=', 'by_job')],'invisible': [('apply_to', '!=', 'by_job')]}"/>
                                <field name="requester_id" readonly="1" force_save="1" invisible="1"/>
                                <field name="approval_matrix_setting" readonly="1" force_save="1" invisible="1"/>
                                <field name="approvers_ids" widget="many2many_tags" readonly="1" force_save="1" invisible="1"/>
                                <field name="feedback_parent" readonly="1" force_save="1" invisible="1"/>
                                <field name="is_requester" invisible="1"/>
                                <field name="is_approver" invisible="1"/>
                                <field name="is_offering_letter_approval_matrix" invisible="1"/>
                            </group>
                            <group>
                                <field name="create_uid"/>
                                <field name="create_date"/>
                                <field name="company_id" readonly="1"/>
                                
                            </group>
                        </group>
                        <notebook>
                            <page name="offering_lines" string="Offering Lines">
                                <field name="offering_line_ids" attrs="{'readonly': [('state', '!=', 'draft')]}">
                                    <tree editable="bottom" create="1">
                                        <field name="applicant_id" required="1" attrs="{'readonly': ['|',('parent.all_applicant', '=', True),('parent.apply_to', '=', 'by_applicant')]}" force_save="1" options="{'no_open': True, 'no_create': True}"/>
                                        <field name="department_id" readonly="1" force_save="1" options="{'no_open': True}"/>
                                        <field name="job_id" readonly="1" force_save="1" options="{'no_open': True}"/>
                                        <button name="action_get_attachment_view" string="Attachments" type="object" icon="fa-paperclip" />
                                        <field name="last_drawn_salary" readonly="1" force_save="1"/>
                                        <field name="salary_expected" readonly="1" force_save="1"/>
                                        <field name="salary_proposed" attrs="{'readonly': [('parent.state', '!=', 'draft')]}"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Approval Matrix Lines" attrs="{'invisible':[('is_offering_letter_approval_matrix','=',False)]}">
                                <field name="offering_approval_ids">
                                    <tree editable="bottom" create="0" delete="0">
                                        <field name="sequence" readonly="1" force_save="1"/>
                                        <field name="approver_id" widget="many2many_tags"  readonly="1" force_save="1"/>
                                        <field name="minimum_approver" readonly="1" force_save="1"/>
                                        <field name="approval_status" readonly="1" force_save="1"/>
                                        <field name="timestamp" readonly="1" force_save="1"/>
                                        <field name="feedback" readonly="1" force_save="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_offering_letter_request_tree_view" model="ir.ui.view">
            <field name="name">hr.offering.request.tree</field>
            <field name="model">hr.offering.request</field>
            <field name="arch" type="xml">
                <tree string="Offering Letter Request">
                    <field name="sequence" string="Reference Number"/>
                    <field name="name"/>
                    <field name="all_applicant"/>
                    <field name="apply_to"/>
                    <field name="state" decoration-primary="state == 'draft'" decoration-warning="state == 'submitted'" decoration-success="state == 'approved'" decoration-danger="state == 'rejected'" widget="badge"/>
                    <field name="create_uid"/>
                    <field name="company_id" optional="hide"/>
                    
                </tree>
            </field>
        </record>
        
        <record id="hr_offering_letter_request_search_view" model="ir.ui.view">
            <field name="name">hr.offering.request.search</field>
            <field name="model">hr.offering.request</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>       
                </search>
            </field>
        </record>

        <record id="hr_offering_letter_request_act_window" model="ir.actions.act_window">
            <field name="name">Offering Letter Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.offering.request</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <menuitem name="Offering Letter Request"
            id="hr_offering_letter_request_menu"
            parent="hr_recruitment.menu_crm_case_categ0_act_job"
            action="hr_offering_letter_request_act_window"
            sequence="4"/>
        
    </data>
</odoo>