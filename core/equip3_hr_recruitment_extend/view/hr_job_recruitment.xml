<odoo>
    <data>

      
        <record model="ir.actions.act_window" id="hr_applicant_new_tab">
            <field name="name">Applicant</field>
            <field name="res_model">hr.applicant</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="hr_recruitment.hr_applicant_view_form"/>
            
        </record>

        <record model="ir.actions.act_window" id="survey_interview_result">
            <field name="name">Interview Result</field>
            <field name="res_model">survey.user_input</field>
            <field name="view_mode">form</field>
            
        </record>



        <record  model="ir.actions.server" id="action_hr_applicant_new_tab">
            <field name="name">Applications</field>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="model_id" ref="model_hr_applicant"/>
            <field name="code">action = model.open_new_tab_record()</field>
        </record>


        <record id="inherit_hr_job_form_view" model="ir.ui.view">
            <field name="name">hr job</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_hr_job_form"/>
            <field name="arch" type="xml">
                <field name="user_id" position="attributes">
                    <attribute name="string">Unused Field</attribute>
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="is_published" position="attributes">
                    <attribute name="invisible">0</attribute>
                </field>
                <xpath expr="//form" position="attributes">
                    <attribute name="class">menu_hr_recruitment_sticky</attribute>
                </xpath>
                <xpath expr="//sheet/notebook/page[2]" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="//sheet/notebook/page[1]" position="attributes">
                    <attribute name="autofocus">True</attribute>
                </xpath>
                <xpath expr="//sheet/notebook/page[1]/div" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//sheet/notebook/page[1]/div" position="before">
                    <div attrs="{'invisible': [('state', '!=', 'recruit')]}">
                            <label for="description"/>
                            <field name="description"/>
                    </div>
                    <group>
                        
                        <group name="recruitment">
                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                            <field name="department_id"/>
                            <field name="classification_id" options="{'no_create': True}" />
                            <field name="website_id" options="{'no_create': True}"
                                   domain="['|', ('company_id', '=', company_id), ('company_id', '=', False)]"
                                   groups="website.group_multi_website"/>
                            <field name="address_id" context="{'show_address': 1}" domain="[('is_company', '=', True )]"
                                   options="{'always_reload': True}"/>
                        </group>
                        <group>
                            <label for="minimum_weightage"/>
                            <div class="o_row">
                                <field name="minimum_weightage"/>
                                <span>%%</span>
                            </div>
                            <field name="no_of_recruitment" attrs="{'readonly':[('is_use_mpp','=',True)]}"  />
                            <field name="is_use_mpp" invisible="1" attrs="{'readonly':[('is_use_mpp','=',True)]}"/>
                            <field name="second_user_ids" string="User" widget="many2many_tags"/>
                            <field name="real_second_user_ids" string="User" widget="many2many_tags" invisible="1"/>
                            <field name="user_ids" widget="many2many_tags" required="1" domain="[('id','in',user_ids_hashgroup)]"/>
                            <field name="user_ids_hashgroup" widget="many2many_tags" invisible="1"/>
                            <field name="is_setting_psychological_test" invisible="1"/>
                            <field name="is_auto_next_stage" attrs="{'invisible':[('is_setting_psychological_test','=',True)]}"/>
                            <!-- <field name="default_reject_stage_id"/> -->
                            <field name="create_date" string="Created On"/>
                            <field name="create_uid" string="Created By"/>
                            <field name="rejected_at_stage" invisible="1"/>
                            <field name="domain_stage_apply" invisible="1" widget="many2many_tags"/>
                           
                        </group>
                    </group>
                </xpath>
                <xpath expr="//sheet/notebook/page[2]" position="after">
                    <page string="Applicant Question">
                        <!-- <div class="o_row">
                            <label for="is_custom_sequence" string="Custom Question Sequence" attrs="{'invisible':[('id','=',False)]}"/>
                            <field name="is_custom_sequence" widget="boolean_toggle" attrs="{'invisible':[('id','=',False)]}"/>
                             <button name="open_sequence" class="oe_highlight"  type="object"
                             string="Set Question Sequence" attrs="{'invisible':[('is_custom_sequence','=',False)]}"/>

                        </div> -->
                        <!-- <group >
                            <field name="is_use_ocr" string="Using OCR"/>
                            
                        </group> -->
                
                        <br/>
                        <div>
                            <label for="question_job_position" string="Applicant Question"
                                   style="font-size: 15px; padding-bottom: 10px"/>
                             <field name="global_question_job_position"
                                   context="{'tree_view_ref' : 'equip3_hr_recruitment_extend.question_job_position_tree_view'}" invisible="1" />
                            <field name="question_job_position"
                                   context="{'tree_view_ref' : 'equip3_hr_recruitment_extend.question_job_position_tree_view','form_view_ref':'equip3_hr_recruitment_extend.question_job_position_form_view'}"
                                   invisible="0"/>
                            <!-- <label for="question_job_position_ids" string="Specific Question"
                                   style="font-size: 15px; padding-bottom: 10px"/>
                            <field name="question_job_position_ids"
                                   context="{'tree_view_ref' : 'equip3_hr_recruitment_extend.question_job_position_tree_view2','form_view_ref':'equip3_hr_recruitment_extend.question_job_position_form_view2'}"/> -->
                            
                          
                        </div>
                    </page>
                    <page string="Stages">
                        <div>
                            <field name="stage_ids" context="{'default_user_ids': user_ids}">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="stage_id" required="1"/>
                                    <field name="is_apply_stage"/>
                                    <field name="is_final_stage"/>
                                    <field name="user_ids" widget="many2many_tags"  domain="[('id','in',user_ids_hashgroup)]"/>
                                    <field name="user_ids_hashgroup" widget="many2many_tags" invisible="1"/>
                                    <field name="survey_id" domain="[('state','!=','draft')]"/>
                                    <field name="interview_id" domain="[('survey_type','=','interview')]"/>
                                    <field name="min_qualification" attrs="{'readonly': [('survey_id','=',False)]}"/>
                                    <field name="min_skills_score" attrs="{'readonly': [('interview_id','=',False)]}"/>
                                    <field name="min_personality_score" attrs="{'readonly': [('interview_id','=',False)]}"/>
                                    <!-- <field name="stage_failed" attrs="{'required':[('survey_id','!=',False)]}"/> -->
                                    <!-- <field name="template_wa_ids"  widget="many2many_tags"/> -->
                                    <field name="remarks"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="sequence"/>
                                                <field name="fold"/>
                                            </group>
                                            <group>
                                                <field name="stage_id"/>
                                            </group>
                                        </group>
                                        <group>
                                            <field name="user_ids"/>
                                            <field name="remarks"/>
                                            <field name="job_id"/>
                                            <field name="aplicant_ids"/>
                                        </group>
                                        <group>
                                            <group>
                                                <field name="survey_id"/>
                                                <field name="min_qualification"/>
                                                <field name="min_personality_score"/>
                                                <field name="is_apply_stage"/>
                                            </group>
                                            <group>
                                                <field name="interview_id"/>
                                                <field name="min_skills_score"/>
                                                <field name="stage_failed"/>
                                            </group>
                                        </group>
                                        <group>
                                            <field name="user_ids_hashgroup"/>
                                            <field name="template_wa_ids"/>
                                            <field name="message_is_follower"/>
                                            <field name="message_follower_ids"/>
                                            <field name="message_partner_ids"/>
                                            <field name="message_channel_ids"/>
                                            <field name="message_ids"/>
                                        </group>
                                        <group>
                                            <group>
                                                <field name="message_unread"/>
                                                <field name="message_needaction"/>
                                                <field name="message_has_error"/>
                                                <field name="message_attachment_count"/>
                                            </group>
                                            <group>
                                                <field name="message_unread_counter"/>
                                                <field name="message_needaction_counter"/>
                                                <field name="message_has_error_counter"/>
                                                <field name="message_main_attachment_id"/>
                                            </group>
                                        </group>
                                        <group>
                                            <field name="website_message_ids"/>
                                            <field name="message_has_sms_error"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </div>
                    </page>

                    <page string="Website">
                        <div>
                            <field name="website_description" />
                                
                        </div>
                    </page>
                  
                </xpath>
                <field name="address_id" position="replace">
                    <field name="address_id" invisible="1"/>
                    <field name="custom_work_location_id"/>
                    <field name="skill_ids" widget="many2many_tags"/>
                </field>            
            </field>
        </record>



        <record id="inherit_hr_job_view_hr_job_tree_view" model="ir.ui.view">
            <field name="name">hr job tree inherit</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_hr_job_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="class">menu_hr_recruitment_sticky</attribute>
                </xpath>

                <xpath expr="/tree/field[@name='department_id']" position="after">
                    <field name="is_use_mpp" invisible="1" />
                </xpath>
                <!-- <xpath expr="//field[@name='deparment_id']" position="after">
                   <field name="is_use_mpp" />
                </xpath> -->
                
            </field>
        </record>

        <record id="inherit_job_position_smart_button" model="ir.ui.view">
            <field name="name">hr job smart button</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr_recruitment.hr_job_survey"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='%(hr_recruitment.action_hr_job_applications)d']" position="attributes">
                    <attribute name="icon">o-hm-smart-hrm-application</attribute>
                </xpath>
                <xpath expr="//button[@name='action_get_attachment_tree_view']" position="attributes">
                    <attribute name="icon">o-hm-smart-hrm-documents-1</attribute>
                </xpath>
                <xpath expr="//button[@name='%(hr_recruitment.action_hr_job_sources)d']" position="attributes">
                    <attribute name="icon">o-hm-smart-hrm-trackers</attribute>
                </xpath>
                <xpath expr="//button[@name='%(hr_recruitment.action_hr_job_applications)d']" position="after">
                    <button class="oe_stat_button" type="action" icon="o-hm-smart-hrm-test-result" name="%(equip3_hr_recruitment_extend.action_survey_user_input_recruitment_smart)d">
                        <field name="participations_count" widget="statinfo" string="Test Result"/>
                    </button>
                </xpath>
            </field>
        </record>

        <record id="inherit_hr_applicant_form_view" model="ir.ui.view">
            <field name="name">hr applicant</field>
            <field name="model">hr.applicant</field>
            <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/div[@name='button_box']" position="inside">
                    <button name="qualification_answer" class="oe_stat_button" icon="o-hm-smart-hrm-qualification-answer" type="object"
                            help="Schedule interview with this applicant" string="Qualification Answer">
                    </button>
                </xpath>

                <xpath expr="//group/field[@name='availability']" position="after">
                    <label for="working_experience" />
                    <!-- <label for="birth_years" string="Age"/> -->
                    <div>
                        <field name="working_experience" readonly="1"/>
                        <field name="working_experience_year" readonly='1'/>
                        <field name="working_experience_months" readonly="1"/>
                        <field name="working_experience_month" readonly='1'/>
                        <field name="working_experience_days" readonly="1"/>
                        <field name="working_experience_day" readonly='1'/>
                    </div>
                </xpath>

                <xpath expr="//separator" position="before">
                    <group string="Past Experience">
                        <field name="past_experience_ids" nolabel="1">
                            <tree editable="bottom" create="1" edit="1" delete="1">
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="total_working_experience" />
                                <field name="total_working_only_years" invisible="1"/>
                                <field name="is_currently_work_here"/>
                                <field name="company_name" />
                                <field name="position"/>
                                <field name="job_descriptions"/>
                                <field name="reason_for_leaving"/>
                                <field name="salary" groups="equip3_hr_accessright_settings.equip3_group_hr_recruitment_applicant_salary"/>
                                <field name="company_telephone_number" style="padding-left: 15px !important;"/>
                            </tree>
                        </field>
                    </group>
                </xpath>

                <field name="type_id" position="after">
                    <field name="cv_name" invisible="1"/>
                    <field name="file_cv" widget="binary" filename="cv_name"/>
                    <field name="identification_no"/>
                </field>

                <xpath expr="//field[@name='description']" position="after">
                    <notebook>
                        <page name="Applicant Question" string="Applicant Question">
                            <field name="applicant_question_answer_spesific" nolabel="1">
                                <tree editable="bottom" create="0" edit="0" delete="0">
                                    <field name="question_id" invisible="1"/>
                                    <field name="question" style="white-space: pre-wrap;word-wrap: break-word;width: 40%;"/>
                                    <field name="answer" string="Answer" style="white-space: pre-wrap;word-wrap: break-word;width: 40%;max-width: 450px;"/>
                                    
                                    <field name="file" filename="file_name" widget="binary" />
                                    <field name="file_name" invisible="1" force_save="1"/>
                                </tree>
                            </field>
                        </page>

                        <page name="employee_skills" string="Employee Skills">
                            <field name="employee_skill_ids" nolabel="1">
                                <tree editable="bottom" create="0" edit="0" delete="0">
                                    <field name="skill_type_id"/>
                                    <field name="skill_id"/>
                                    <field name="skill_level_id" />
                                </tree>
                            </field> 
                        </page>


                       <page string="Quadrant Score">
                                <label for="category_id" string="Category"/>
                                <field name="category_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                <br/>
                                <br/>
                                <field name="quadran_line_ids" >
                                    <tree editable="bottom" create="0" delete="0" edit="0">
                                        <field name="name"/>
                                        <field name="technical_test"/>
                                        <field name="interview"/>
                                        <field name="index"/>
                                    </tree>
                                </field>
                            </page>
                    </notebook>

                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="hr_kanban_view_applicant_inherit">
            <field name="name">Hr Applicants kanban</field>
            <field name="model">hr.applicant</field>
            <field name="inherit_id" ref="hr_recruitment.hr_kanban_view_applicant"/>
            <field name="arch" type="xml">
                <kanban position="attributes">
                    <attribute name="group_create">false</attribute>
                </kanban>
                <field name="active" position="after">
                    <field name="is_blacklist" />
                    <field name="is_hire"/>
                </field>
                

                <xpath expr="//kanban/templates/t/div" position="inside">
                   
                        <div class="ribbon-applicant ribbon-top-right-applicant" attrs="{'invisible':[('is_blacklist','=',False)]}">
                            <span class="ribbon-blacklist">
                                Blacklisted
                            </span> 
                        </div>
          
                </xpath>             

                <xpath expr="//templates/t/div/div[@class='o_dropdown_kanban dropdown']" position="before">
                    <span class="badge badge-pill badge-success pull-right mr-4" attrs="{'invisible': [('is_hire', '=', False)]}">Hired</span>
                </xpath>

                <xpath expr="//templates/t/div/div[@class='oe_kanban_content']/div[@class='o_kanban_record_top']"
                       position="replace">
                    <div class="o_kanban_record_top">
                        <div class="o_kanban_record_headings">
                            <b class="o_kanban_record_title mt8" t-if="record.partner_name.raw_value">
                                <field name="partner_name"/>
                                <br/>
                            </b>
                            <t t-else="1">
                                <i class="o_kanban_record_title">
                                    <field name="name"/>
                                </i>
                                <br/>
                            </t>
                            <div class="o_kanban_record_subtitle">
                                <field name="job_id"/>

                            </div>

                            <div class="o_kanban_record_subtitle">

                                <field name="email_from"/>
                            </div>


                            <div class="o_kanban_record_subtitle">

                                <field name="partner_phone" widget="phone"/>

                                
                            </div>

                        </div>
                    </div>
                </xpath>

                <xpath expr="//templates/t/div/div[@class='oe_kanban_content']/t[@t-if='record.partner_mobile.raw_value']"
                       position="after">
                    <div class="o_kanban_record_subtitle">

                        <field name="type_id"/>
                    </div>

                </xpath>


                

                <xpath expr="//templates/t/div/div[@class='oe_kanban_content']/div[@class='o_kanban_record_bottom mt4']/div[@class='oe_kanban_bottom_right']/a[@name='action_get_attachment_tree_view']"
                       position="attributes">
                    <attribute name="invisible">1</attribute>

                </xpath>
                <xpath expr="//templates/t/div/div[@class='oe_kanban_content']/div[@class='o_kanban_record_bottom mt4']/div[@class='oe_kanban_bottom_right']/a[@name='action_get_attachment_tree_view']"
                       position="after">
                       <a role="button" name="%(action_hr_applicant_new_tab)d" type="action" class="btn btn-sm ">
                        <span title="Link Trackers"><i class="fa fa-lg fa-external-link"></i></span> 
                    </a>

                </xpath>
            </field>
        </record>
    </data>
</odoo>