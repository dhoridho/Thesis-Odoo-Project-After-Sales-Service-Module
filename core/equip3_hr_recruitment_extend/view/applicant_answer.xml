<odoo>
    <data>

        <record id="applicant_answer_form_view" model="ir.ui.view">
            <field name="name">applicant.answer.form</field>
            <field name="model">applicant.answer</field>
            <field name="arch" type="xml">
                <form string="Applicant Summary" >
                    <sheet>
                        <group>
                            <group>
                                <field name="question" />
                                <field name="answer" />
                                <field name="file" />
                            </group>
                        </group>
                        
                    </sheet>
                </form>
            </field>
        </record>



    </data>


</odoo>