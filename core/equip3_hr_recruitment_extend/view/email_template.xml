<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="EmailTemplate_form_inherit" model="ir.ui.view">
            <field name="name">hashmicro.inherit.EmailTemplate.form</field>
            <field name="model">mail.template</field>
            <field name="inherit_id" ref="mail.email_template_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='reply_to']" position="after">
                    <field name="qualification_url"/>
                </xpath>
                <xpath expr="//button[@name='create_action']" position="attributes">
                    <attribute name="icon">o-hm-smart-hrm-add</attribute>
                </xpath>
                <xpath expr="//button[@name='%(mail.mail_template_preview_action)d']" position="attributes">
                    <attribute name="icon">o-hm-smart-hrm-preview</attribute>
                </xpath>
            </field>
        </record>
     
    </data>
</odoo>