<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="mbti_reporting_pivot_view" model="ir.ui.view">
            <field name="name">MBTI Reporting</field>
            <field name="model">survey.user_input</field>
            <field name="arch" type="xml">
                <pivot string="MBTI Reporting" disable_linking="True">
                    <field name="mbti_result" type="row" />
                    <field name="applicant_id" type="row" />
                    <field name="applicant_name" type="row" />
                    <field name="email" type="row" />
                </pivot>
            </field>
        </record>

        <record id="mbti_reporting_tree_view" model="ir.ui.view">
            <field name="name">MBTI Reporting Tree View</field>
            <field name="model">survey.user_input</field>
            <field name="inherit_id" ref="survey.survey_user_input_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='scoring_success']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='scoring_percentage']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <record id="mbti_reporting_search_view" model="ir.ui.view">
            <field name="name">MBTI Reporting Search View</field>
            <field name="model">survey.user_input</field>
            <field name="arch" type="xml">
                <search string="Search MBTI Reporting">
                    <field name="mbti_result" />
                    <field name="applicant_id" />
                    <field name="create_date" />
                    <field name="deadline" />
                    <field name="survey_type" />
                    
                    <filter name="mbti_type" string="MBTI Type" domain="[('survey_type', '=', 'MBTI'), ('mbti_result', '!=', False)]" />
                    <group expand="0" string="Group By">
                        <filter name="group_by_personality" string="Personality" domain="[]" context="{'group_by': 'mbti_result'}"/>
                    </group>
                </search>
            </field>
        </record>
    
        <record id='mbti_reporting' model='ir.actions.act_window'>
            <field name="name">MBTI Reporting</field>
            <field name="res_model">survey.user_input</field>
            <field name="view_mode">tree,pivot,form</field>
            <field name="search_view_id" ref="mbti_reporting_search_view"/>
            <field name="context">{'search_default_mbti_type':1, 'search_default_group_by_personality':1}</field>
            <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                Nobody has replied to your surveys yet
            </p>
            </field>
        </record>
    
    </data>
    

</odoo>
