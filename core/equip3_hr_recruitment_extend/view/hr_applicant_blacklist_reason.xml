<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="blacklist_reason_description_view_form" model="ir.ui.view">
            <field name="name">hr.applicant.blacklist.reason.description.view.form</field>
            <field name="model">hr.applicant.blacklist.reason.description</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="blacklist_reason_id" required="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}" />
                            <field name="description" />
                            
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="hr_applicant_blacklist_reason_view_tree" model="ir.ui.view">
            <field name="name">hr.applicant.blacklist.reason.view.tree</field>
            <field name="model">hr.applicant.blacklist.reason</field>
            <field name="arch" type="xml">
                <tree string="Blacklist Reason" editable="bottom">
                    <field name="name" string="Description" required="1"/>
                </tree>
            </field>
        </record>


        <record id="hr_applicant_blacklist_reason_action" model="ir.actions.act_window">
            <field name="name">Blacklist Reason</field>
            <field name="res_model">hr.applicant.blacklist.reason</field>
            <field name="view_mode">tree</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
  
        </record>


        <menuitem
            id="hr_applicant_blacklist_reason_menu"
            name="Blacklist Reason"
            action="hr_applicant_blacklist_reason_action"
            parent="hr_recruitment.menu_hr_recruitment_configuration"
            sequence="5"/>






    
        
    
    </data>
    

</odoo>
