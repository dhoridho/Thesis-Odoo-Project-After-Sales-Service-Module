<odoo>
<data>

    <record id="manpower_planning_form_view" model="ir.ui.view">
        <field name="name">Manpower Planning</field>
        <field name="model">manpower.planning</field>
        <field name="arch" type="xml">
            <form string="Manpower Planning" class="menu_hr_recruitment_sticky">
                <header>
                    <button string="Submit" name="action_submit" type="object"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button string="Approve" name="wizard_approve" type="object"
                            attrs="{'invisible': [('is_hide_button', '=', True)]}" class="oe_highlight"/>
                    <button string="Reject" name="action_reject" type="object"
                        attrs="{'invisible': [('is_hide_button', '=', True)]}" class="oe_highlight"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,selected,approved,rejected" attrs="{'invisible':[('is_mpp_approval_matrix','=',False)]}"/>
                    <field name="state1" widget="statusbar" statusbar_visible="draft,approved" attrs="{'invisible':[('is_mpp_approval_matrix','!=',False)]}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    <button name="get_mpp_line" string="MPP Lines" class="oe_stat_button"
                     icon="fa-list-ol" type="object" help="To show MPP Lines" />
                    </div>
                    <div class="oe_title">
                        <h1 class="o_row">
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                        <group>
                            <group>
                                <field name="employee_id" invisible="1"/>
                                <field name="is_hide_button" invisible="1"/>
                                <field name="job_id" invisible="1"/>
                                <field name="department_id" invisible="1"/>
                                <field name="approvers_ids" widget="many2many_tags" invisible="1"/>
                                <field name="approved_user_ids" widget="many2many_tags" invisible="1"/>
                                <field name="is_approver" invisible="1"/>
                                <label for="mpp_year" string="MPP Year" attrs="{'readonly':[('state','in',['selected','approved','rejected'])]}" force_save="1"/>
                                <div class="o_row">
                                    <field name="mpp_year" nolabel="1" required="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}" attrs="{'readonly':[('state','in',['selected','approved','rejected'])]}" force_save="1"/>
                                </div>
                                <field name="mpp_type_domain"  invisible="1"/>
                                <field name="mpp_type"  string="MPP Type" required="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}" attrs="{'readonly':[('state','in',['selected','approved','rejected'])]}" force_save="1" domain="[('id','in',mpp_type_domain)]"/>
                                <field name="mpp_period" string="MPP Period" required="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}" domain="([('mpp_type','=',mpp_type),('mpp_year','=',mpp_year)])" attrs="{'readonly':[('state','in',['selected','approved','rejected'])]}" force_save="1"/>
                                <!-- <label for="date_start" string="Specific Period" /> -->
                                <!-- <div class="o_row">
                                    <field name="date_start" nolabel="1" readonly="1" force_save="1"/> 
                                    <span class="o_form_label mx-3 ">-</span>
                                    <field name="date_end" nolabel="1" readonly="1" force_save="1"/> 
                                </div> -->
                                <field name="work_location_ids" widget="many2many_tags" required="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}" attrs="{'readonly':[('state','in',['selected','approved','rejected'])]}" force_save="1"/>
                                <field name="all_department" attrs="{'readonly':[('state','in',['selected','approved','rejected'])]}" force_save="1"/>
                                <field name="department_ids" widget="many2many_tags" attrs="{'invisible':[('all_department','=',True)],'required':[('all_department','=',False)],'readonly':[('state','in',['selected','approved','rejected'])]}" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                <field name="company_id" readonly="1" force_save="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}" attrs="{'readonly':[('state','in',['selected','approved','rejected'])]}"/>
                                <field name="create_uid" readonly="1" force_save="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                <field name="create_date" />
                                <field name="is_readonly_line" invisible="1" />
                                <field name="is_mpp_approval_matrix" invisible="1"/>
                            </group>

                        </group>

                        <notebook>
                            <page string="MPP Lines">
                                <field name="manpower_line_ids"  attrs="{'readonly':[('is_readonly_line','=',True)]}" force_save="1">
                                    <tree editable="bottom">
                                        <field name="period" invisible="1"/>
                                        <field name="manpower_id" invisible="1"/>
                                        <field name="create_date" invisible="1"/>
                                        <field name="period_shadow" invisible="1"/>
                                        <field name="department_domain_ids"  invisible="1"/>
                                        <field name="work_location_ids"  invisible="1"/>
                                        <field name="department_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}" domain="[('id','in',department_domain_ids)]" required="1"/>
                                        <field name="job_position_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}" domain="[('department_id','=',department_id)]" required="1"/>
                                        <field name="work_location_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}" domain="[('id','in',work_location_ids)]" required="1"/>
                                        <field name="current_number_of_employee" readonly="1" force_save="1"/>
                                        <field name="current_number_of_employee_shadow" invisible="1"/>
                                        <field name="add" />
                                        <field name="replace" />
                                        <field name="total_expected_new_employee" readonly="1" force_save="1" />
                                        <field name="total_fullfillment" readonly="1" force_save="1"/>
                                        <field name="total_forecasted_employees" readonly="1" force_save="1"/>
                                    </tree>
                                </field>
                            </page>

                            <page name="manpower_planning_matrix" string="Manpower Planning Matrix" attrs="{'invisible':[('is_mpp_approval_matrix','=',False)]}">
                                <field name="manpower_matrix_line_ids"  readonly="1" force_save="1">
                                    <tree>
                                        <field name="sequence" />
                                        <field name="user_ids" widget="many2many_tags" />
                                        <field name="minimum_approver"/>
                                        <field name="approval_status" />
                                        <field name="approver_state" invisible="1"/>
                                        <field name="approved_time" />
                                        <field name="feedback" />
                                    </tree>
                                    </field>

                            </page>
                        </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>

        </field>
    </record>

    <record id="view_manpower_planning_request_filter" model="ir.ui.view">
        <field name="name">manpower.planning.search</field>
        <field name="model">manpower.planning</field>
        <field name="arch" type="xml">
            <search string="Search Manpower Planning">
               <group name="group_by" string="Group By">
                   <filter name="mpp_year" string="Year" domain="[]" context="{'group_by' : 'mpp_year'}" />
                   <filter name="mpp_type" string="MPP Type" domain="[]" context="{'group_by' : 'mpp_type'}" />
                   <filter name="name" string="Name" domain="[]" context="{'group_by' : 'name'}" />
               </group>
           </search>
        </field>
    </record>

 <record id="manpower_planning_tree_view" model="ir.ui.view">
        <field name="name">Manpower Planning</field>
        <field name="model">manpower.planning</field>
        <field name="arch" type="xml">
            <tree string="Manpower Planning" class="menu_hr_recruitment_sticky">
                <field name="name"/>
                <field name="mpp_year"  string="MPP Year"/>
                <field name="mpp_type" string="MPP Type"/>
                <field name="mpp_period" string="Period"/>
                <field name="company_id"/>
                <field name="state" decoration-primary="state == 'draft'"
                            decoration-warning="state == 'selected'"
                            decoration-success="state == 'approved'" 
                            decoration-danger="state == 'rejected'" 
                        widget='badge' string="Status"/>
            </tree>
        </field>
    </record>

    <record id="view_manpower_planning_line_filter" model="ir.ui.view">
        <field name="name">manpower.planning.line.search</field>
        <field name="model">manpower.planning.line</field>
        <field name="arch" type="xml">
            <search string="Search Manpower Plan Lines">
                <field name="manpower_id"/>
                <field name="mpp_year"/>
                <field name="job_position_id"/>
                <field name="work_location_id"/>
                <field name="department_id"/>
               <group name="group_by" string="Group By">
                   <filter name="mpp_year" string="Year" domain="[]" context="{'group_by' : 'mpp_year'}" />
                   <filter name="mpp_type" string="Type" domain="[]" context="{'group_by' : 'mpp_type'}" />
               </group>
               <searchpanel>
                    <field name="department_id" icon="fa-building" enable_counters="1"/>
                    <field name="work_location_id" icon="fa-building" enable_counters="1"/>
                </searchpanel>
           </search>
        </field>
    </record>

    <record id="manpower_planning_line_tree_view" model="ir.ui.view">
        <field name="name">Manpower Plan Lines</field>
        <field name="model">manpower.planning.line</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0" class="menu_hr_recruitment_sticky">
                <field name="manpower_id" string="Number"/>
                <field name="mpp_year" string="Year"/>
                <field name="department_id"/>
                <field name="job_position_id"/>
                <field name="work_location_id"/>
                <field name="current_number_of_employee"/>
                <field name="add"/>
                <field name="replace"/>
                <field name="total_expected_new_employee"/>
                <field name="total_fullfillment"/>
                <field name="total_forecasted_employees"/>
            </tree>
        </field>
    </record>

 <record id="manpower_planning_action" model="ir.actions.act_window">
        <field name="name">Manpower Plan</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">manpower.planning</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_mpp_year':0,'search_default_mpp_type':0}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
              Create a new Manpower Planning
            </p>
        </field>
    </record>

    <record id="manpower_planning_approver_action" model="ir.actions.act_window">
        <field name="name">Manpower Plan To Approve</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">manpower.planning</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('state', '=', 'selected')]</field>
        <field name="context">{'search_default_mpp_year':0,'search_default_mpp_type':0,'is_to_approve':True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
              Create a new Manpower Planning
            </p>
        </field>
    </record>

    <record id="manpower_planning_line_act_window" model="ir.actions.act_window">
            <field name="name">Manpower Plan Lines</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">manpower.planning.line</field>
            <field name="view_mode">tree</field>
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree','view_id':ref('manpower_planning_line_tree_view')})]"/>
            <field name="search_view_id" ref="view_manpower_planning_line_filter"/>
            <field name="context">{}</field>
        </record>


    <menuitem id="man_power_root_menu_id"
              name="Manpower Planning"
              parent="hr_recruitment.menu_hr_recruitment_root"
              sequence="31"
    />

    <record id="man_power_root_menu_id" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-parent-hrm-man-power-planning</field> 
    </record>

    <menuitem id="man_power_menu_id"
              name="Manpower Plan Request"
              action="manpower_planning_action"
              parent="man_power_root_menu_id"
              sequence="1"
    />
    
    <menuitem id="manpower_planning_line_menu" 
            name="Manpower Plan Lines"
            parent="man_power_root_menu_id"
            action="manpower_planning_line_act_window"
            sequence="2"/>

    <menuitem id="man_power_approve_menu_id"
              name="Manpower Plan To Approve"
              action="manpower_planning_approver_action"
              parent="man_power_root_menu_id"
              sequence="3"
              groups="equip3_hr_accessright_settings.equip3_group_hr_recruitment_manager"
    />

</data>


</odoo>