<odoo>
<data>

    <record id="schedulling_meeting_form_view" model="ir.ui.view">
        <field name="name">Schedulling Meeting</field>
        <field name="model">applicant.schedulling.meeting</field>
        <field name="arch" type="xml">
            <form string="Schedulling Meeting" class="menu_hr_recruitment_sticky">
                <header>
                    <button string="Generate" name="action_generate" type="object"
                            attrs="{'invisible': [('is_hide_generate', '=', True)]}"
                            class="oe_highlight"
                            />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="get_calendar" class="oe_stat_button" icon="o-hm-smart-hrm-calendar" type="object" >
                            <field name="calendar_count" widget="statinfo" string="Calendar"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1 class="o_row">
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="recruiter" required="1" widget="many2many_tags" string="User" attrs="{'readonly': [('is_hide_generate', '=', True)]}"/>
                            <label for="date_from" string="Date Period"/>
                            <div class="o_row">
                                From
                                <field name="date_from" nolabel="1" required="1" attrs="{'readonly': [('is_hide_generate', '=', True)]}"/>
                                To
                                <field name="date_to" nolabel="1" required="1" attrs="{'readonly': [('is_hide_generate', '=', True)]}"/>
                            </div>
                            <field name="create_uid"/>
                            <field name="create_date"/>
                            <field name="is_hide_generate" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="page_availility" string="Availabilty">
                            <field name="line_ids" attrs="{'readonly': [('is_hide_generate', '=', True)]}">
                                <tree editable="bottom">
                                    <field name="days" required="1"/>
                                    <field name="from_time" widget="float_time" required="1"/>
                                    <field name="to_time" widget="float_time" required="1"/>
                                    <field name="applicant_slots" required="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>

        </field>
    </record>

    <record id="applicant_schedulling_meeting_filter" model="ir.ui.view">
        <field name="name">applicant.schedulling.meeting.search</field>
        <field name="model">applicant.schedulling.meeting</field>
        <field name="arch" type="xml">
            <search string="Schedulling Meeting">
               <field name="name" />
           </search>
        </field>
    </record>

 <record id="schedulling_meeting_tree_view" model="ir.ui.view">
        <field name="name">Schedulling Meeting</field>
        <field name="model">applicant.schedulling.meeting</field>
        <field name="arch" type="xml">
            <tree string="Schedulling Meeting" class="menu_hr_recruitment_sticky">
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
            </tree>
        </field>
    </record>

 <record id="schedulling_meeting_result_tree_view" model="ir.ui.view">
        <field name="name">Schedulling Meeting</field>
        <field name="model">applicant.schedulling.meeting.result</field>
        <field name="arch" type="xml">
            <tree string="Schedulling Meeting" editable="bottom" create="0" edit="0" delete="0">
                <field name="applicant_ids" widget="many2many_tags"/>
                <field name="date"/>
                <field name="from_time" widget="float_time"/>
                <field name="to_time" widget="float_time"/>
                <field name="applicant_slots" required="1"/>
                <field name="interviewer"/>
            </tree>
        </field>
</record>

<record id="schedulling_meeting_result_form_view" model="ir.ui.view">
        <field name="name">Schedulling Meeting</field>
        <field name="model">applicant.schedulling.meeting.result</field>
        <field name="arch" type="xml">
            <form string="Schedulling Meeting"  create="0" edit="0" delete="0">
                <sheet>
                <group>
                    <group>
                        <field name="meeting_id" string="Meeting"/>
                        <field name="applicant_ids"  widget="many2many_tags" />
                         <field name="interviewer"  widget="many2one_avatar_user"/>
                         <field name="applicant_slots"/>
                    </group>
                    <group>
                        <field name="date" string="Date"/>
                        <field name="from_time" widget="float_time" />
                        <field name="to_time" widget="float_time"/>
                    </group>
                </group>
                <notebook>
                    <page name="history_line_ids" string="Interview Schedule History">
                                <field name="history_line_ids" readonly="1">
                                    <tree editable="bottom">
                                        <field name="name" />
                                        <field name="when"/>
                                        <field name="location"  />
                                        <field name="status"  />
                                        <field name="reasons"  />
                                    </tree>
                                </field>
                                
                            </page>
                </notebook>
                <!-- <notebook>
                            <page name="applicant_confirmed_scheduled" string="Applicant Confirmed Scheduled">
                                <field name="line_ids" readonly="1">
                                    <tree editable="bottom">
                                        <field name="applicant_id" />
                                        <field name="date"/>
                                        <field name="time" widget="float_time" />
                                    </tree>
                                </field>
                                
                            </page>
                </notebook> -->
                    </sheet>
            </form>
        </field>
</record>

<record id="schedulling_meeting_result_applicant_form_view" model="ir.ui.view">
        <field name="name">Schedulling Meeting</field>
        <field name="model">applicant.schedulling.meeting.result.confirmed</field>
        <field name="arch" type="xml">
            <form string="Schedulling Meeting"  create="0" edit="0" delete="0">
                <sheet>
                <group>
                    <group>
                        <field name="interviewer"/>
                        <field name="applicant_id" />
                        <field name="date" />
                         <field name="time"  widget="float_time"/>
                    </group>
                    
                </group>
                
                    </sheet>
            </form>
        </field>
</record>

<record id="schedulling_meeting_tree_applicant_view" model="ir.ui.view">
    <field name="name">Schedulling Meeting</field>
    <field name="model">applicant.schedulling.meeting.result.confirmed</field>
    <field name="arch" type="xml">
        <tree string="Schedulling Meeting" create="0" delete="0" edit="0">
            <field name="interviewer"/>
            <field name="applicant_id"/>
            <field name="date"/>
            <field name="time" widget="float_time"/>
        </tree>
    </field>
</record>


<record id="schedulling_meeting_result_calendar_view" model="ir.ui.view">
    <field name="name">applicant.schedulling.meeting.result.calendar.view</field>
    <field name="model">applicant.schedulling.meeting.result</field>
    <field name="arch" type="xml">
        <calendar string="Schedulling Meeting" date_start="date"  mode="month" quick_add="False"  event_open_popup="from_time" hide_time="true"    >
       
            <field name="interviewer" 
             widget="many2one_avatar_user"
            write_model="calendar.contacts.recruitment"
             write_field="interviewer"
             avatar_field="image_128"
            />
            <field name="name" string="Applicant" />
            <field name="is_applicant" invisible="0"/>
            
            <field name="from_time" widget="float_time"/>
            <field name="to_time" widget="float_time"/>
            <field name="applicant_slots" required="1"/>
            
        </calendar>
    </field>
</record>

<record id="view_calendar_event_recruitment_inherit_form" model="ir.ui.view">
    <field name="name">calendar.event.recruitment.inherit.form</field>
    <field name="model">calendar.event</field>
    <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='location']" position="after">
            <field name="applicant_name"/>
        </xpath>
    </field>
</record>



<record id="schedulling_meeting_result_calendar_applicant_view" model="ir.ui.view">
    <field name="name">applicant.schedulling.meeting.result.confirmed.view</field>
    <field name="model">applicant.schedulling.meeting.result.confirmed</field>
    <field name="arch" type="xml">
        <calendar string="Schedulling Meeting" date_start="date"  mode="month" quick_add="False"  event_open_popup="from_time" hide_time="true"    >
       
            <field name="interviewer" 
             widget="many2one_avatar_user"
            write_model="calendar.contacts.recruitment"
             write_field="interviewer"
             avatar_field="image_128"

            
            />
            <field name="time" widget="float_time"/>
            <field name="applicant_id"/>
            
        </calendar>
    </field>
</record>

<record id="applicant_schedulling_meeting_confirmed_filter" model="ir.ui.view">
    <field name="name">applicant.schedulling.meeting.result.confirmed.search</field>
    <field name="model">applicant.schedulling.meeting.result.confirmed</field>
    <field name="arch" type="xml">
        <search string="Schedulling Meeting">
            <filter string="My Interview" name="interview" domain="[('interviewer','=',uid)]" />
       </search>
    </field>
</record>

<record id="applicant_schedulling_meeting_filter" model="ir.ui.view">
    <field name="name">applicant.schedulling.meeting.result.search</field>
    <field name="model">applicant.schedulling.meeting.result</field>
    <field name="arch" type="xml">
        <search string="Schedulling Meeting">
            <filter string="My Interview" name="interview" domain="[('interviewer','=',uid),('is_applicant_shadow','=',True)]" />
       </search>
    </field>
</record>



<record id="interview_calendar_view_action" model="ir.actions.act_window">
    <field name="name">Interview Scheduling</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">applicant.schedulling.meeting.result</field>
    <field name="view_mode">calendar,tree</field>
    <field name="context">{'search_default_interview':1}</field>
    <field name="domain">[('is_applicant_shadow','=',True)]</field>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Create New Interview Scheduling
        </p>
    </field>
</record>
<record id="interview_calendar_view_applicant_action" model="ir.actions.act_window">
    <field name="name">Interview Calendar</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">applicant.schedulling.meeting.result.confirmed</field>
    <field name="view_mode">calendar,tree</field>
    <field name="context">{'search_default_interview':1}</field>
    <field name="domain"></field>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Create New Interview Calendar
        </p>
    </field>
</record>

<record id="action_applicant_interview_calendar_event" model="ir.actions.act_window">
    <field name="name">Interview Calendar</field>
    <field name="res_model">calendar.event</field>
    <field name="view_mode">calendar,tree,form</field>
    <field name="view_id" ref="calendar.view_calendar_event_calendar"/>
    <field name="search_view_id" ref="calendar.view_calendar_event_search"/>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
        Interview Calendar
        </p>
    </field>
</record>

<record id="action_view_calendar_event_calendar" model="ir.actions.act_window.view">
    <field name="act_window_id" ref="action_applicant_interview_calendar_event"/>
    <field name="sequence" eval="1"/>
    <field name="view_mode">calendar</field>
    <field name="view_id" ref="calendar.view_calendar_event_calendar"/>
</record>

<record id="action_view_calendar_event_tree" model="ir.actions.act_window.view">
    <field name="act_window_id" ref="action_applicant_interview_calendar_event"/>
    <field name="sequence" eval="2"/>
    <field name="view_mode">tree</field>
    <field name="view_id" ref="calendar.view_calendar_event_tree"/>
</record>

<record id="action_applicant_interview_calendar_event_form" model="ir.actions.act_window.view">
    <field name="act_window_id" ref="action_applicant_interview_calendar_event"/>
    <field name="sequence" eval="3"/>
    <field name="view_mode">form</field>
    <field name="view_id" ref="view_calendar_event_recruitment_inherit_form"/>
</record>

    

 <record id="schedulling_meeting_tree_view_action" model="ir.actions.act_window">
        <field name="name">Scheduling Meeting</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">applicant.schedulling.meeting</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain"></field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
              Create New Schedulling Meeting
            </p>
        </field>
    </record>

   
    <menuitem id="schedulling_meeting_menu_id"
              name="Scheduling Meeting"
              action="schedulling_meeting_tree_view_action"
              parent="hr_recruitment.menu_hr_recruitment_configuration"
              sequence="4"
              groups="equip3_hr_accessright_settings.equip3_group_hr_recruitment_user"
    />
    <menuitem id="interview_calendar_menu_id"
              name="Interview Scheduling"
              action="interview_calendar_view_action"
              parent="hr_recruitment.menu_crm_case_categ0_act_job"
              sequence="3"
             
             
    />
    <menuitem id="applicant_interview_calendar_event_menu_id"
              name="Interview Calendar"
              action="action_applicant_interview_calendar_event"
              parent="hr_recruitment.menu_crm_case_categ0_act_job"
              sequence="4"       
    />







</data>


</odoo>