<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="quadrant_score_form_view" model="ir.ui.view">
            <field name="name">quadrant.score.form</field>
            <field name="model">quadrant.score</field>
            <field name="arch" type="xml">
                <form create="0">
                    <sheet>
                        <group>
                            <field name="applicant_id"/>
                            <field name="applicant_name"/>
                            <field name="applicant_email"/>
                            <field name="job_id"/>
                            <field name="category_id"/>
                        </group>
                        <notebook>
                            <page string="Quadrant Indicator">
                                <field name="line_ids" >
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="technical_test"/>
                                        <field name="interview"/>
                                        <field name="index"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="quadrant_score_tree_view" model="ir.ui.view">
            <field name="name">quadrant.score.tree</field>
            <field name="model">quadrant.score</field>
            <field name="arch" type="xml">
                <tree create="0">
                    <field name="applicant_id"/>
                    <field name="applicant_name"/>
                    <field name="applicant_email"/>
                    <field name="job_id"/>
                    <field name="category_id"/>
                </tree>
            </field>
        </record>

        <record id="quadrant_score_action" model="ir.actions.act_window">
            <field name="name">Quadrant Score</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">quadrant.score</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                </p>
            </field>
        </record>

        <!-- <menuitem id="quadrant_score_menu"
                  name="Quadrant Score"
                  action="quadrant_score_action"
                  parent="recruitment_tests_menu"
                  sequence="4"/> -->

    </data>
</odoo>