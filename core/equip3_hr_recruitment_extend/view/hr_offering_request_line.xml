<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="hr_offering_request_line_view_tree" model="ir.ui.view">
        <field name="name">hr.offering.request.line.view.tree</field>
        <field name="model">hr.offering.request.line</field>
        <field name="arch" type="xml">
            <tree string="Offering Letters">
                <field name="applicant_id" />
                <field name="department_id" />
                <field name="job_id" />
                <button name="action_get_attachment_view" string="Attachments" type="object" icon="fa-paperclip" />
                <field name="last_drawn_salary" />
                <field name="salary_expected" />
                <field name="salary_proposed" />
                
            </tree>
        </field>
    </record>

    <record id="hr_offering_request_line_view_form" model="ir.ui.view">
        <field name="name">hr.offering.request.line.view.form</field>
        <field name="model">hr.offering.request.line</field>
        <field name="arch" type="xml">
            <form create="0" edit="0" delete="0">
                <sheet>
                    <group>
                        <field name="applicant_id" />
                        <field name="department_id" />
                        <field name="job_id" />
                        <field name="last_drawn_salary" />
                        <field name="salary_expected" />
                        <field name="salary_proposed" />
                        <field name="file_name" invisible="1" />
                        <field name="offering_letter_id" widget="binary" filename="file_name"/>
                        
                    </group>
                </sheet>
            </form>
        </field>
    </record>
        

        <record id="hr_offering_letter_request_line_act_window" model="ir.actions.act_window">
            <field name="name">Offering Letter Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.offering.request.line</field>
            <field name="view_mode">tree</field>
            <field name="context">{}</field>
        </record>

        
    </data>
</odoo>