<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_offering_letter_form_view" model="ir.ui.view">
            <field name="name">hr.offering.letter.form</field>
            <field name="model">hr.offering.letter</field>
            <field name="arch" type="xml">
                <form string="Offering Letter" >
                    <sheet>
                        <group>
                            <div class="oe_title" style="width: 100%;">
                                <h1><field name="name"  required="1"/></h1>
                            </div>
                            <group>
                                <field name="email_template_id"/>
                                <field name="wa_template_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="letter_content" string="Letter Content">
                                <field name="letter_content" nolabel="1" required="1"/>
                            </page>
                            <page name="letter_content_variable" string="Variables">
                                <field name="letter_variable_ids" readonly="1" force_save="1">
                                    <tree >
                                        <field name="name"/>
                                        <field name="description"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_offering_letter_tree_view" model="ir.ui.view">
            <field name="name">hr.offering.letter.form</field>
            <field name="model">hr.offering.letter</field>
            <field name="arch" type="xml">
                <tree string="Offering Letter" >
                    <field name="name" />
                </tree>
            </field>
        </record>
        
        <record id="hr_offering_letter_search_view" model="ir.ui.view">
            <field name="name">hr.offering.letter.search</field>
            <field name="model">hr.offering.letter</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>       
                </search>
            </field>
        </record>

        <record id="hr_offering_letter_act_window" model="ir.actions.act_window">
            <field name="name">Offering Letter</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.offering.letter</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <menuitem name="Offering Letter"
            id="hr_offering_letter_menu"
            parent="hr_recruitment.menu_hr_recruitment_configuration"
            action="hr_offering_letter_act_window"/>
        
    </data>
</odoo>