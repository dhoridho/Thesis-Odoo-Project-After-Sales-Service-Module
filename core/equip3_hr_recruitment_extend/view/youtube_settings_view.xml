<odoo>
<data>


    <record id="youtube_settings_form" model="ir.ui.view">
            <field name="name">youtube.settings.form</field>
            <field name="model">youtube.settings</field>
            <field name="arch" type="xml">
                <form string="Youtube Settings" create='false'>
                    <group>
                        <group>
                            <field name="name" invisible="1"/>
                            <field name="youtube_access_token" required="1" />
                            <field name="youtube_access_refresh_token" required="1" />
                            <field name="youtube_access_scopes_token" required="1" />
                            <field name="youtube_client_id" required="1" />
                            <field name="youtube_client_secret" required="1" />
                            <field name="youtube_redirect_url" required="1" />
                            <field name="info" readonly="1"  />
                        </group>
                    </group>
                </form>
            </field>
        </record>

         <record id="youtube_settings_tree_view" model="ir.ui.view">
            <field name="name">youtube.settings.tree</field>
            <field name="model">youtube.settings</field>
            <field name="arch" type="xml">
                <tree string="Youtube Settings" create="false">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="youtube_settings_action" model="ir.actions.act_window">
                <field name="name">Youtube Settings</field>
                <field name="type">ir.actions.act_window</field>
                <field name="res_model">youtube.settings</field>
                <field name="view_mode">tree,form</field>
        </record>

        <menuitem id='youtube_settings_menu' 
            name='Youtube Settings' 
            parent="hr_recruitment.menu_hr_recruitment_configuration" 
            sequence='3'
            groups="base.group_no_one" 
            action="youtube_settings_action"/>
</data>

</odoo>