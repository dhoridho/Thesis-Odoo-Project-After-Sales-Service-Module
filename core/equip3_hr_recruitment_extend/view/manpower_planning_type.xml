<odoo>
    <data>


        <record id="manpower_planning_form_type_view" model="ir.ui.view">
            <field name="name">Manpower Plan Type</field>
            <field name="model">manpower.planning.type</field>
            <field name="arch" type="xml">
                <form string="Manpower Planning" class="menu_hr_recruitment_sticky">
                    <sheet>

                            <group>
                                <group>
                                    <field name="name" required="1"/>
                                    <field name="create_uid" readonly="1" force_save="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                    <field name="create_date" />
                                </group>

                            </group>


                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>

            </field>
        </record>

     <record id="manpower_planning_type_tree_view" model="ir.ui.view">
            <field name="name">Manpower Plan Type</field>
            <field name="model">manpower.planning.type</field>
            <field name="arch" type="xml">
                <tree string="Manpower Plan Type" class="menu_hr_recruitment_sticky">
                    <field name="name"/>
                </tree>
            </field>
        </record>

     <record id="manpower_planning_type_action" model="ir.actions.act_window">
            <field name="name">Manpower Plan Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">manpower.planning.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                  Create a new Manpower Plan Type
                </p>
            </field>
        </record>


        <menuitem id="man_power_type_menu_id"
                  name="Manpower Plan Type"
                  action="manpower_planning_type_action"
                  parent="man_power_root_menu_id"
                  groups="equip3_hr_accessright_settings.equip3_group_hr_recruitment_manager"
        />


    </data>


    </odoo>