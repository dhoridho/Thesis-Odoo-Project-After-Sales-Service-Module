<?xml version="1.0"?>
<odoo>
    <data>

        <!-- Recruitment Outsource Management -->
        <record id="hr_recruitment_outsource_view_search" model="ir.ui.view">
            <field name="name">hr.recruitment.outsource.view.search</field>
            <field name="model">hr.recruitment.outsource</field>
            <field name="arch" type="xml">
                <search string="Search Outsource Management">
                    <field name="outsource_id"/>
                    <field name="job_id"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="hr_recruitment_outsource_tree">
            <field name="name">hr.recruitment.outsource.tree</field>
            <field name="model">hr.recruitment.outsource</field>
            <field name="arch" type="xml">
                <tree string="Outsource Management" editable="top" class="o_recruitment_list" sample="1">
                    <field name="outsource_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                    <field name="job_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                    <field name="responsible_user_id"/>
                    <field name="url" widget="url"/>
                    <button name="generate_link" string="Generate Link" class="btn btn-primary" type="object"/>
                </tree>
            </field>
        </record>

        <record id="hr_recruitment_outsource_action" model="ir.actions.act_window">
            <field name="name">Outsource Management</field>
            <field name="res_model">hr.recruitment.outsource</field>
        </record>

        <menuitem
            id="menu_hr_recruitment_outsource"
            parent="hr_recruitment.menu_hr_recruitment_configuration"
            action="hr_recruitment_outsource_action"
            groups="base.group_no_one"
            sequence="5"/>
        
        <!-- Recruitment Outsource Master -->
        <record id="hr_recruitment_outsource_mmaster_view_search" model="ir.ui.view">
            <field name="name">hr.recruitment.outsource.master.view.search</field>
            <field name="model">hr.recruitment.outsource.master</field>
            <field name="arch" type="xml">
                <search string="Search Outsource Masterdata">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="hr_recruitment_outsource_master_tree">
            <field name="name">hr.recruitment.outsource.master.tree</field>
            <field name="model">hr.recruitment.outsource.master</field>
            <field name="arch" type="xml">
                <tree string="Outsource Master">
                    <field name="name"/>
                    <field name="company_id" readonly="1"/>
                    <field name="create_date"/>
                    <field name="create_uid" string="Create By"/>
                </tree>
            </field>
        </record>

        <record id="hr_recruitment_outsource_master_form" model="ir.ui.view">
            <field name="name">hr.recruitment.outsource.master.form</field>
            <field name="model">hr.recruitment.outsource.master</field>
            <field name="arch" type="xml">
                <form string="Outsource Masterdata">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"  required="1"/>
                                <field name="company_id" readonly="1"/>
                                <field name="create_date"/>
                                <field name="create_uid" string="Create By"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_recruitment_outsource_master_action" model="ir.actions.act_window">
            <field name="name">Outsource Masterdata</field>
            <field name="res_model">hr.recruitment.outsource.master</field>
        </record>

        <menuitem
            id="menu_hr_recruitment_outsource_master"
            parent="hr_recruitment.menu_hr_recruitment_configuration"
            action="hr_recruitment_outsource_master_action"
            groups="base.group_no_one"
            sequence="5"/>
        
        <!-- action group by outsoure -->
        <record id="hr_applicant_view_search_bis_inherit" model="ir.ui.view">
            <field name="name">hr.applicant.view.search.inherit</field>
            <field name="model">hr.applicant</field>
            <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_search_bis"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='job']" position="after">
                    <filter name="group_by_outsource" string="Outsource" context="{'group_by':'outsource_id'}"/>
                </xpath>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_hr_job_applications_by_outsource">
            <field name="name">By Outsource</field>
            <field name="res_model">hr.applicant</field>
            <field name="view_mode">kanban,tree,form,graph,calendar,pivot</field>
            <field name="search_view_id" ref="hr_recruitment.hr_applicant_view_search_bis"/>
            <field name="context">{'search_default_group_by_outsource':1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_empty_folder">
                    No applications yet
                </p>
            </field>
        </record>

        <menuitem
            name="By Outsource"
            parent="hr_recruitment.menu_crm_case_categ0_act_job"
            id="menu_hr_applicant_by_outsource"
            action="action_hr_job_applications_by_outsource" sequence="1"/>

    </data>
</odoo>