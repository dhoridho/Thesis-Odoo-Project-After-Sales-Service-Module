<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hasmicro_survey_user_input_form" model="ir.ui.view">
            <field name="name">hashmicro.survey.user_input.form</field>
            <field name="model">survey.user_input</field>
            <field name="inherit_id" ref="survey.survey_user_input_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="class">menu_hr_recruitment_sticky</attribute>
                </xpath>
                <xpath expr="//field[@name='access_token']" position="after">
                    <field name="applicant_id" attrs="{'invisible':[('survey_type','=','PEER_REVIEW')]}"/>
                    <field name="job_id" attrs="{'invisible':[('survey_type','=','PEER_REVIEW')]}"/>
                    <field name="is_use" invisible="1" />
                </xpath>

                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="applicant_name" attrs="{'invisible':[('survey_type','=','PEER_REVIEW')]}"/>
                    <field name="company_id" readonly="1"/>
                    
                </xpath>
                

            </field>
        </record>

        <record id="equip3_hr_training_survey_user_input_tree_inherit_css" model="ir.ui.view">
            <field name="name">equip3_hr_training.survey_user_input.css.tree</field>
            <field name="model">survey.user_input</field>
            <field name="inherit_id" ref="survey.survey_user_input_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="class">menu_hr_recruitment_sticky</attribute>
                </xpath>
                <xpath expr="//field[@name='state']" position="after">
                    <field name="company_id" readonly="1"/>
                </xpath>
            </field>
        </record>

    </data>




</odoo>