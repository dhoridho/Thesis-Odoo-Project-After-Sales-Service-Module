        <template id="assets_frontend" name="Assets Frontend" inherit_id="website.assets_frontend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/equip3_hr_recruitment_extend/static/src/js/frontend.js"></script>
                <script type="text/javascript" src="/equip3_hr_recruitment_extend/static/src/js/slick.js"></script>
                <script type="text/javascript" src="/equip3_hr_recruitment_extend/static/src/js/job.js"></script>
                <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/tesseract.js"></script>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.11.338/pdf.min.js"></script>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.8.335/pdf.js"></script>
                <link rel="stylesheet" type="text/css" href="/equip3_hr_recruitment_extend/static/src/css/slick.css"/>
                <link rel="stylesheet" type="text/css" href="/equip3_hr_recruitment_extend/static/src/css/slick-theme.css"/>
                <link rel="stylesheet" type="text/css" href="/equip3_hr_recruitment_extend/static/src/css/frontend.css"/>
            </xpath>
        </template>

        <template id="inherit_assets_backend" name="Assets Backend" inherit_id="web.assets_backend">
            <xpath expr="//script[@src='/web/static/src/js/views/graph/graph_controller.js']" position="replace">
                <script type="text/javascript" src="/equip3_hr_recruitment_extend/static/src/js/views/graph/graph_controller.js"></script>
                <script type="text/javascript" src="/equip3_hr_recruitment_extend/static/src/js/views/kanban/kanban_views.js"></script>
            </xpath>
            <xpath expr="//script[@src='/web/static/src/js/control_panel/search_utils.js']" position="replace">
                <script type="text/javascript" src="/equip3_hr_recruitment_extend/static/src/js/control_panel/search_utils.js"/>
            </xpath>
            <xpath expr="link[last()]" position="after">
                <link rel="stylesheet" type="text/css" href="/equip3_hr_recruitment_extend/static/src/css/recruitment_flow.css"/>
                <script type="text/javascript" src="/equip3_hr_recruitment_extend/static/src/js/recruitment_flow.js"></script>
            </xpath>
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/equip3_hr_recruitment_extend/static/src/js/cv_preview_button.js"/>
                <!-- <script type="text/javascript" src="/equip3_hr_recruitment_extend/static/src/js/letter_preview_button.js"/> -->
                <script type="text/javascript" src="/equip3_hr_recruitment_extend/static/src/js/relational_field.js"/>
                <link rel="stylesheet" type="text/scss" href="/equip3_hr_recruitment_extend/static/src/scss/sticky_header.scss"/>
                <link rel="stylesheet" type="text/scss" href="/equip3_hr_recruitment_extend/static/src/css/applicant.css"/>
            </xpath>
        </template>

        <template id="inherit_ks_backend_theme_assets" name="Inherit Ks Custom Reports assets" inherit_id="ks_custom_report.assets_backend">
            <xpath expr="//script[@src='/ks_custom_report/static/src/js/ks_graph_renderer.js']" position="replace">
                <script type="text/javascript" src="/equip3_hr_recruitment_extend/static/src/js/ks_graph_renderer.js"></script>
            </xpath>
        </template>

    </data>
</odoo>
