                <h2>MPP Settings</h2>
                <div class="row mt16 o_settings_container"
                     name="equip3_hr_recruitment_extend.online_posting_setting_container">
                    <div class="col-12 col-lg-6 o_setting_box"
                         id="equip3_hr_recruitment_extend.publish_available_jobs_setting">
                        <div class="o_setting_left_pane">
                            <field name="mpp"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="mpp" string="Enable / Disable Manpower Plan"/>
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <div class="o_setting_left_pane">
                                    <field name="mpp_approval_matrix"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="mpp_approval_matrix" string="MPP Approval Matrix"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <div class="text-muted">
                                        On/Off switch for approval matrix on Manpower Plan Request and Manpower Requisition.
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="content-group" attrs="{'invisible':[('mpp_approval_matrix','=',False)]}">
                            <div class="mt16">
                                <label string="Approval Method" for="man_power_type_approval"/>
                                <field name="man_power_type_approval" class="oe_inline" required="1"/>
                            </div>
                        </div>
                        <div class="content-group">
                            <div class="mt16" attrs="{'invisible':['|', ('mpp_approval_matrix','=',False), ('man_power_type_approval','!=','employee_hierarchy')]}">
                                <label string="Approval Levels" for="man_power_level"/>
                                <field name="man_power_level" class="oe_inline" required="1"/>
                            </div>
                        </div>
                    </div>
                </div>
                <h2>Offering Letter Settings</h2>
                <div class="row mt16 o_settings_container" name="offering_letter_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="offering_letter_control_setting" title="Offering Letter Settings">
                        <div class="content-group">
                            <div class="mt16">
                                <div class="o_setting_left_pane">
                                    <field name="offering_letter_approval_matrix"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="offering_letter_approval_matrix" string="Offering Letter Approval Matrix"/>
                                </div>
                            </div>
                            <div class="mt16" attrs="{'invisible':[('offering_letter_approval_matrix','=',False)]}">
                                <label for="offering_letter_approval_method" string="Approval Method"/>
                                <field style="margin-left:10px;" name="offering_letter_approval_method" class="oe_inline" required="1"/>
                            </div>
                            <div class="mt16" attrs="{'invisible':['|',('offering_letter_approval_matrix','=',False),('offering_letter_approval_method','!=','employee_hierarchy')]}">
                                <label for="offering_letter_approval_level" string="Approval Level"/>
                                <field style="margin-left:16px;" name="offering_letter_approval_level" class="oe_inline" required="1"/>
                            </div>
                            <!--                Auto Email Follow Cron-->
                            <div class="mt16">
                                <field  name="auto_follow_recruitment"/>
                                <label for="auto_follow_recruitment" string="Auto Follow Up" class="oe_inline" style="margin-left:10px;"/>
                            </div>
                            <div class="mt16" attrs="{'invisible':[('auto_follow_recruitment','!=',True)]}">
                                <label for="interval_number_recruitment" string="Execute Every"/>
                                <div attrs="{'invisible':[('auto_follow_recruitment','!=',True)]}">
                                    <field name="interval_number_recruitment" class="oe_inline" attrs="{'required':[('auto_follow_recruitment','=',True)]}"/>
                                    <field name="interval_type_recruitment" class="oe_inline" attrs="{'required':[('auto_follow_recruitment','=',True)]}"/>
                                </div>
                            </div>
                            <div class="mt16" attrs="{'invisible':[('auto_follow_recruitment','!=',True)]}">
                                <label for="number_of_repetitions_recruitment" string="Number of Repetitions"/>
                                <field name="number_of_repetitions_recruitment" class="oe_inline" attrs="{'required':[('auto_follow_recruitment','=',True)]}"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
