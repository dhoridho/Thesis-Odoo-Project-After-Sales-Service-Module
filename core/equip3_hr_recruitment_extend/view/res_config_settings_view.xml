            <xpath expr="//div[@class='app_settings_block']/div[@name='recruitment_process_div']" position="inside">
                <div class="col-12 o_setting_box" id="psychological_test">
                    <div class="o_setting_left_pane">
                        <field name="is_auto_next_stage_psychological"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label class="font-weight-bold" for="is_auto_next_stage_psychological" string="Auto Next Stage"/>
                        <div class="text-muted">
                            Auto Next Stage After Completing Psychological Test
                        </div>
                    </div>
                </div>
                <div class="col-12 o_setting_box" id="psychological_test_2" attrs="{'invisible':[('is_auto_next_stage_psychological','=',False)]}">
                    <div class="content-group">
                        <div class="mt16">
                            <label string="Next Stage Based On" for="auto_completion_on_psychological"/>
                            <field name="auto_completion_on_psychological" class="oe_inline" required="1"/>
                        </div>
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[@class='app_settings_block']/div[@name='recruitment_process_div']" position="after">                
                <h2>Application Form</h2>
                <div class="row mt16 o_settings_container"
                     name="equip3_hr_recruitment_extend.online_posting_setting_container">
                    <div class="col-12 col-lg-6 o_setting_box"
                         id="equip3_hr_recruitment_extend.publish_available_jobs_setting">
                        <div class="o_setting_left_pane">
                            <field name="is_sms"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_sms" string="SMS"/>
                        </div>
                    </div>
                </div>
                <div class="row mt16 o_settings_container"
                     name="equip3_hr_recruitment_extend.whatsapp_setting_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="equip3_hr_recruitment_extend.whatsapp_setting">
                        <div class="o_setting_left_pane">
                            <field name="is_whatsapp"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_whatsapp" string="Whatsapp"/>
                        </div>
                    </div>
                </div>

                <h2>Notification</h2>

                <div class="row mt16 o_settings_container"
                name="equip3_hr_recruitment_extend.online_posting_setting_container">
               <div class="col-12 col-lg-6 o_setting_box"
                    id="equip3_hr_recruitment_extend.notification_wa_setting">
                   <div class="o_setting_left_pane">
                       <field name="send_by_wa_recruitment"/>
                   </div>
                   <div class="o_setting_right_pane">
                    <label string="Send By Whatsapp" for="send_by_wa_recruitment"/>
                   </div>
                   <!-- <div class="mt16" attrs="{'invisible':[('send_by_wa','=',False)]}">
                    <label string="Connector" for="connector_id"/>
                    <field name="connector_id" class="oe_inline" attrs="{'required':[('send_by_wa','=',True)]}" />
                </div> -->
               </div>
           </div>
           <div class="row mt16 o_settings_container"
                name="equip3_hr_recruitment_extend.whatsapp_setting_container">
               <div class="col-12 col-lg-6 o_setting_box" id="equip3_hr_recruitment_extend.notification_email_setting">
                   <div class="o_setting_left_pane">
                       <field name="send_by_email_recruitment"/>
                   </div>
                   <div class="o_setting_right_pane">
                    <label string="Send By Email" for="send_by_email_recruitment"/>
                   </div>
               </div>
           </div>

                


                

