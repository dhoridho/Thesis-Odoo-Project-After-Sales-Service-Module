<?xml version="1.0"?>
<odoo>
    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hr.recruitment.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="75"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='app_settings_block']/div[@name='online_posting_setting_container']" position="after">
                <div class="row mt16 o_settings_container"
                     name="equip3_hr_recruitment_extend.online_posting_setting_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="limit_1_response_peremail">
                        <div class="o_setting_left_pane">
                            <field name="limit_to_one_response_per_email_recruitment"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="limit_to_one_response_per_email_recruitment" string="Limit of Application for Applicants"/>
                            <div class="text-muted">
                                Set limits on applying for the same job position
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt16 o_settings_container"
                    name="equip3_hr_recruitment_extend.online_posting_setting_container" attrs="{'invisible': [('limit_to_one_response_per_email_recruitment', '=', False)]}">
                    <div class="col-12 o_setting_box" id="is_email">
                        <p style="font-weight:bold">Validation based on:</p>
                        <div class="o_setting_left_pane">
                            <field name="is_email"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label class="font-weight-bold" for="is_email" string="Email"/>
                        </div>
                    </div>
                    <div class="col-12 o_setting_box" id="is_id_card_number">
                        <div class="o_setting_left_pane">
                            <field name="is_id_card_number"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label class="font-weight-bold" for="is_id_card_number" string="ID Card Number"/>
                        </div>
                    </div>
                    <div class="col-12 o_setting_box" id="is_phone_number">
                        <div class="o_setting_left_pane">
                            <field name="is_phone_number"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label class="font-weight-bold" for="is_phone_number" string="Phone Number"/>
                        </div>
                    </div>
                    <div class="col-12 o_setting_box" id="max_apply_of_applicant">
                        <div class="content-group">
                            <div class="mt16">
                                <label string="Maximum Apply of Applicant" for="max_apply_of_applicant"/>
                                <field name="max_apply_of_applicant" class="oe_inline"/>
                            </div>
                        </div>
                    </div>

                    <div class="row mt16 o_settings_container" name="equip3_hr_recruitment_extend.online_posting_setting_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="limit_1_response_peremail">
                        <group attrs="{'invisible': [('limit_to_one_response_per_email_recruitment', '=', False)]}">
                            <label string="Range Time" for="range_time_number"/>
                            <div>
                                <field name="range_time_number"/>
                                <field name="range_time_period"/>
                            </div>
                        </group>
                    </div>
                </div>
                </div>

