<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="quadrant_category_form_view" model="ir.ui.view">
            <field name="name">quadrant.category.form</field>
            <field name="model">quadrant.category</field>
            <field name="arch" type="xml">
                <form create="0">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <label for="skill_score_from"/>
                            <div name="skill_score" class="d-flex">
                                <field name="skill_score_from"/>
                                <span class="oe_inline o_form_label mx-3"> to </span>
                                <field name="skill_score_to"/>
                            </div>
                            <label for="personality_score_from"/>
                            <div name="personality_score" class="d-flex">
                                <field name="personality_score_from"/>
                                <span class="oe_inline o_form_label mx-3"> to </span>
                                <field name="personality_score_to"/>
                            </div>
                        </group>
                    </sheet>
                </form>
    
            </field>
        </record>

        <record id="quadrant_category_tree_view" model="ir.ui.view">
            <field name="name">quadrant.category.tree</field>
            <field name="model">quadrant.category</field>
            <field name="arch" type="xml">
                <tree create="0">
                    <field name="name"/>
                    <field name="skill_score_display"/>
                    <field name="personality_score_display"/>
                </tree>
            </field>
        </record>

        <record id="quadrant_category_action" model="ir.actions.act_window">
            <field name="name">Quadrant Category</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">quadrant.category</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                </p>
            </field>
        </record>

        <menuitem id="quadrant_category_menu"
                  name="Quadrant Category"
                  action="quadrant_category_action"
                  parent="hr_recruitment.menu_hr_recruitment_configuration"
                  sequence="16"/>
    </data>
</odoo>