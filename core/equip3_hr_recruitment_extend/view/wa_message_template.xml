<odoo>
    <data>
    
    
        <record id="wa_message_template_form" model="ir.ui.view">
            <field name="name">wa.template.message.form</field>
            <field name="model">wa.template.message</field>
            <field name="arch" type="xml">
                <form string="Whatsapp Template">
                    <header>
                        <button string="Test Template" name="action_test_template" type="object"/>
                    
                    </header>
                    <sheet>
                        
                            <group>
                                <group>
                                    <field name="name"  required="1"/>
                                    <field name="message" required="1" />
                                    <field name="category" required="1" />
                                </group>
                                <group>
                                    <field name="broadcast_template_id"  domain="[('category','=',category)]" required="1"/>
                                    <field name="namespace"  />
                                    <field name="content"  />
                                </group>
                            </group>
                            <notebook>
                                <page name="wa_variable" string="Variables">
                                    <field name="wa_variable_ids"  >
                                        <tree create="0" edit="0" delete="0" editable="bottom">
                                            <field name="name" />
                                            <field name="description" />
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
    
            </field>
        </record>
    
     <record id="wa_message_template_tree_view" model="ir.ui.view">
            <field name="name">wa.template.message.tree</field>
            <field name="model">wa.template.message</field>
            <field name="arch" type="xml">
                <tree string="Whatsapp Template">
                    <field name="name"/>
                    <field name="message" />
                </tree>
            </field>
        </record>


        <record id="wa_message_template_filter" model="ir.ui.view">
            <field name="name">wa.template.message.search</field>
            <field name="model">wa.template.message</field>
            <field name="arch" type="xml">
                <search string="Search Manpower Planning Period">
                    <field name="name" />
               </search>
            </field>
        </record>
    
     <record id="wa_message_template_action" model="ir.actions.act_window">
            <field name="name">Whatsapp Template</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wa.template.message</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                  Create a new Whatsapp Template
                </p>
            </field>
        </record>
    
    
    
      <menuitem id="wa_message_template_menu_id"
            name="Whatsapp Template"
            action="wa_message_template_action"
            parent="hr_recruitment.menu_hr_recruitment_configuration"
            sequence="11"
            />

