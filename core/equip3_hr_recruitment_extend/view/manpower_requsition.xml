                                        <field name="current_number_of_employee_shadow" invisible="1"/>
                                        <field name="add" />
                                        <field name="replace" />
                                        <field name="total_expected_new_employee" readonly="1" force_save="1" />
                                        <field name="total_fullfillment" readonly="1" force_save="1"/>
                                        <field name="total_forecasted_employees" readonly="1" force_save="1"/>
                                    </tree>
                                </field>
                            </page>

                            <page name="manpower_planning_matrix" string="Manpower Planning Matrix">
                                <field name="manpower_matrix_line_ids"  readonly="1" force_save="1">
                                    <tree>
                                        <field name="sequence" />
                                        <field name="user_ids" widget="many2many_tags" />
                                        <field name="minimum_approver"/>
                                        <field name="approval_status" />
                                        <field name="approver_state" invisible="1"/>
                                        <field name="approved_time" />
                                        <field name="feedback" />
                                    </tree>
                                    </field>

                            </page>
                        </notebook> -->
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>

        </field>
    </record>

    <record id="view_manpower_requisition_request_filter" model="ir.ui.view">
        <field name="name">manpower.requisition.search</field>
        <field name="model">manpower.requisition</field>
        <field name="arch" type="xml">
            <search string="Search Manpower Requisition">
                <field name="number" />
                <field name="request_type" />
                <field name="number_of_applicant" />
               <!-- <group name="group_by" string="Group By">
                   <filter name="mpp_year" string="Year" domain="[]" context="{'group_by' : 'mpp_year'}" />
                   <filter name="mpp_type" string="MPP Type" domain="[]" context="{'group_by' : 'mpp_type'}" />
                   <filter name="name" string="Name" domain="[]" context="{'group_by' : 'name'}" />
               </group> -->
           </search>
        </field>
    </record>

    <record id="manpower_requisition_tree_view" model="ir.ui.view">
            <field name="name">Manpower Requisition</field>
            <field name="model">manpower.requisition</field>
            <field name="arch" type="xml">
                <tree string="Manpower Requisition" class="menu_hr_recruitment_sticky">
                    <field name="number" />
                    <field name="request_type" />
                    <field name="number_of_applicant" />
                    <field name="state" decoration-primary="state == 'draft'"
                            decoration-warning="state == 'submitted'"
                            decoration-success="state == 'approved'" 
                            decoration-danger="state == 'rejected'" 
                            widget='badge'/>
                </tree>
            </field>
    </record>


    <record id="manpower_requisition_action" model="ir.actions.act_window">
        <field name="name">Manpower Requisition</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">manpower.requisition</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new Manpower Requisition
            </p>
        </field>
    </record>


        <menuitem id="man_power_requisition_root_menu_id"
        name="Manpower Requisition"
        parent="hr_recruitment.menu_hr_recruitment_root"
        sequence="32"
        />

        <record id="man_power_requisition_root_menu_id" model="ir.ui.menu">
            <field name="equip_icon_class">o-hm-sidebar-parent-hrm-man-power-requisitions</field> 
        </record>

        <menuitem id="man_power_requisition_menu_id"
            name="Manpower Requisition"
            action="manpower_requisition_action"
            parent="man_power_requisition_root_menu_id"
            sequence="1"
        />


        <record id="manpower_requisition_to_approve_action" model="ir.actions.act_window">
            <field name="name">Manpower Requisition to Approve</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">manpower.requisition</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'is_to_approve':True}</field>
            <field name="domain">[('state','=','submitted')]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                Create a new Manpower Requisition To Approve
                </p>
            </field>
        </record>



        <menuitem id="man_power_requisition_to_approve_menu_id"
            name="Manpower Requisition to Approve"
            action="manpower_requisition_to_approve_action"
            parent="man_power_requisition_root_menu_id"
            sequence="1"
        />



</data>


</odoo>