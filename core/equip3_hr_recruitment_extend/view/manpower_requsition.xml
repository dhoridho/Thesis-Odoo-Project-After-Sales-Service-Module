<odoo>
<data>

    <record id="manpower_requisition_form_view" model="ir.ui.view">
        <field name="name">Manpower Requisition</field>
        <field name="model">manpower.requisition</field>
        <field name="arch" type="xml">
            <form string="Manpower Requisition" class="menu_hr_recruitment_sticky">
                <header>

                 
                        <button name="action_confirm" states="draft" type="object" string="Submit" class="oe_highlight"/>
                        <button name="action_generate"  type="object" string="Approve" class="oe_highlight"  attrs="{'invisible':[('is_hide_approve','=',True)]}"/>
                        <button name="action_reject"  type="object" string="Reject" class="oe_highlight" attrs="{'invisible':[('is_hide_reject','=',True)]}"/>
                        
                 
<!-- 
                    <button string="Confirm" name="confirm" type="object"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/> -->
                    <!-- <button string="Approve" name="wizard_approve" type="object"
                            attrs="{'invisible': ['|',('is_approver', '=', False),('state', '!=', 'selected')]}" class="oe_highlight"/>
                    <button string="Reject" name="action_reject" type="object"
                            attrs="{'invisible': ['|',('is_approver', '=', False),('state', '!=', 'selected')]}" class="oe_highlight"/> -->
                    <field name="state" widget="statusbar" attrs="{'invisible':[('is_mpp_approval_matrix','=',False)]}"/>
                    <field name="state1" widget="statusbar" statusbar_visible="draft,approved" attrs="{'invisible':[('is_mpp_approval_matrix','!=',False)]}"/>
                </header>
                <sheet>
                    <!-- <div class="oe_button_box" name="button_box">
                    <button name="get_mpp_line" string="MPP Lines" class="oe_stat_button" icon="fa-list-ol" type="object" help="To show MPP Lines" />
                    </div> -->
                    <div class="oe_title">
                        <h1 class="o_row">
                            <field name="number" readonly="1"/>
                        </h1>
                    </div>
                        <group>
                            <group name="general_requisition">
                                <field name="is_hide_reject" invisible="1"/>
                                <field name="is_hide_approve" invisible="1"/>
                                <field name="employee_id" invisible="1" />
                                <field name="request_type" widget='radio' options="{'horizontal': true}" required="1" attrs="{'readonly':[('state','in',['submitted','approved','rejected'])]}"/>
                                <field name="man_power_plan_id" string="Manpower Plan" attrs="{'invisible':[('request_type','!=','man_power_plan')],'required':[('request_type','=','man_power_plan')],'readonly':[('state','in',['submitted','approved','rejected'])]}" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                <field name="man_power_plan_line_id" string="MPP Lines" attrs="{'invisible':[('request_type','!=','man_power_plan')],'required':[('request_type','=','man_power_plan')],'readonly':[('state','in',['submitted','approved','rejected'])]}" 
                                domain="[('manpower_id','=',man_power_plan_id)]" 
                                options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                <field name="replacement_position_id" attrs="{'invisible':[('request_type','!=','replacement')],'required':[('request_type','=','replacement')],'readonly':[('state','in',['submitted','approved','rejected'])]}" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}" context="{'requisition': 1}" />
                                <field name="replacement_for_id" attrs="{'invisible':[('request_type','!=','replacement')],'required':[('request_type','=','replacement')],'readonly':[('state','in',['submitted','approved','rejected'])]}" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}" domain="[('job_id','=',replacement_position_id)]"/>
                                <field name="expected_join_date" required="1" attrs="{'readonly':[('state','in',['submitted','approved','rejected'])]}" />                
                                <field name="request_reason" required="1" attrs="{'readonly':[('state','in',['submitted','approved','rejected'])]}"/>                
                                <field name="user_approval_ids" widget="many2many_tags" invisible="1"/>
                                <field name="is_mpp_approval_matrix" invisible="1"/>
                            </group>


                            
                        </group>

                        <notebook>
                            <page name="detail_requisition" string="Detail Information">
                                <group name="detail_requisition" >
                                    <group name="detail_requisition_2" >
                                        <field name="company_id"  options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}" readonly="1" force_save="1"/>
                                        <field name="department_id" attrs="{'readonly':['|',('request_type','in',('replacement','man_power_plan')),('state','in',['submitted','approved','rejected'])],'required':[('request_type','=','other')]}" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}" force_save="1"/>
                                        <field name="job_id" attrs="{'readonly':['|',('request_type','in',('replacement','man_power_plan')),('state','in',['submitted','approved','rejected'])],'required':[('request_type','=','other')]}" string="Job Position" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}" domain="[('company_id','=',company_id),('department_id','=',department_id)]" force_save="1"/>
                                        <field name="work_location_id" attrs="{'readonly':['|',('request_type','in',('replacement','man_power_plan')),('state','in',['submitted','approved','rejected'])],'required':[('request_type','=','other')]}" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}" domain="[('company_id','=',company_id)]" force_save="1"/>                
                                        <field name="current_employee" attrs="{'invisible':[('request_type','!=','man_power_plan')]}" readonly="1" force_save="1"/>                
                                        <field name="expected_new_employee" attrs="{'invisible':[('request_type','!=','man_power_plan')]}" readonly="1" force_save="1"/>                
                                        <field name="fulfillment" attrs="{'invisible':[('request_type','!=','man_power_plan')]}" readonly="1" force_save="1"/>                
                                        <field name="number_of_applicant" required="1" attrs="{'readonly':['|',('request_type','=','replacement'),('state','in',['submitted','approved','rejected'])]}" force_save="1"/>                
                                        <field name="create_uid" />                
                                        <field name="create_date" />                
                                    </group>
                                    
                                </group>
                                
                                
                            </page>
                            <page name="approval_matrix_lines_page" string="Approval Matrix Lines" attrs="{'invisible':[('is_mpp_approval_matrix','=',False)]}">
                                <field name="approval_matrix_ids" readonly="1" force_save="1">
                                    <tree>
                                        <field name="sequence" />
                                        <field name="approver_id" widget="many2many_tags"/>
                                        <field name="minimum_approver" />
                                        <field name="approval_status" />
                                        <field name="timestamp" />
                                        <field name="feedback" />
                                    </tree>

                                </field>


                            </page>
                        </notebook>
                       
                        


                        <!-- <notebook>
                            <page string="MPP Lines">
                                <field name="manpower_line_ids" >
                                    <tree editable="bottom">
                                        <field name="period" invisible="1"/>
                                        <field name="manpower_id" invisible="1"/>
                                        <field name="create_date" invisible="1"/>
