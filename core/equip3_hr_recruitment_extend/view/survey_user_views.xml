<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="survey_user_input_view_form_inherit" model="ir.ui.view">
			<field name="name">survey.user_input.view.form.inherit</field>
			<field name="model">survey.user_input</field>
			<field name="inherit_id" ref="survey.survey_user_input_view_form"/>
			<field name="arch" type="xml">
				<field name="scoring_percentage" position="after">
					<field name="score_by_amount" force_save="True" attrs="{'invisible':[('survey_type','in',['INTERVIEW', 'MBTI'])]}"/>
					<field name="survey_type" invisible="1"/>
				</field>
				<field name="scoring_percentage" position="attributes">
					<attribute name="invisible">1</attribute>
				</field>
			</field>
		</record>

		 <record id="survey_user_input_view_tree_inherit" model="ir.ui.view">
            <field name="name">survey.user_input.view.tree.inherit</field>
            <field name="model">survey.user_input</field>
            <field name="inherit_id" ref="survey.survey_user_input_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="expand">1</attribute>
                </xpath>
				<xpath expr="//field[@name='survey_id']" position="after">
					<field name="survey_type"/>
				</xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
				<xpath expr="//field[@name='attempts_number']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
				<xpath expr="//field[@name='state']" position="after">
					<field name="min_qualification"/>
				</xpath>
            </field>
        </record>

		
		<record id="survey_user_input_view_search_inherit" model="ir.ui.view">
			<field name="name">survey.user_input.view.search.inherit</field>
			<field name="model">survey.user_input</field>
			<field name="inherit_id" ref="survey.survey_user_input_view_search"/>
			<field name="arch" type="xml">
				<filter name="not_test" position="after">
					<filter name="Archive"  domain="[('active', '=', False)]"/>
				</filter>
				<xpath expr="//group" position="inside">
					<filter string="Applicant" name="group_by_applicant" domain="[]" context="{'group_by': 'applicant_id'}"/>
				</xpath>

			</field>
		</record>


	</data>
</odoo>