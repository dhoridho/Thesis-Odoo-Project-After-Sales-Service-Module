<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_send_email_popup_wizard_form" model="ir.ui.view">
            <field name="name">send.email.popup.wizard.form</field>
            <field name="model">send.email.popup.wizard</field>
            <field name="arch" type="xml">
                <form string="Send Email Popup">
                      <script>
                            $(document).ready(function(){
                                $('.modal-dialog').css({'width': '30%', 'margin-left': 'auto', 'margin-right': 'auto'});
                            });
                       </script>
                    <group>
                        <field name="message" readonly="1"/>
                    </group>
                    <footer>
                        <button string="Ok" class="btn-primary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>