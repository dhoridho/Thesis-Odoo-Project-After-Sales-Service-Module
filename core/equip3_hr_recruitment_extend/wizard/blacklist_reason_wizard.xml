<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
         <record id="blacklist_wizard_form" model="ir.ui.view">
            <field name="name">blacklist.wizard.form</field>
            <field name="model">blacklist.wizard</field>
            <field name="arch" type="xml">
                <form string="Blacklist Reason">
                    <sheet>
                        <group >
                            <group >
                                <field name="blacklist_id"  string="Blacklist Reason" required="1"  options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}" />
                                <field name="description"  />
                                
                            </group>
                           
                        </group>
                   
                    </sheet>

                    <footer>
                        <button name="submit" type="object" string="Submit" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>

            </field>
        </record>


        
    
    </data>
    

</odoo>
