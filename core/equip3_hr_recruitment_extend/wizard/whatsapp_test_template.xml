<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>



    <record id="whatsapp_test_template_form" model="ir.ui.view">
        <field name="name">whatsapp.test.template.form</field>
        <field name="model">whatsapp.test.template</field>
        <field name="arch" type="xml">
            <form string="Whatsapp Test Template">
                <sheet>
                    <group>
                        <field name="wa_id" invisible="1" />
                        <field name="phone_number"  required="1"/>
                        <field name="broadcast_template_id"  required="1" invisible="1"  options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                    </group>
                    
                </sheet>
                <footer>
                    <button name="send" type="object" string="Send" class="oe_highlight"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="whatsapp_test_template_wizard_action" model="ir.actions.act_window">
        <field name="name">Whatsapp Test Template</field>
        <field name="res_model">whatsapp.test.template</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


    

</data>

    



</odoo>
