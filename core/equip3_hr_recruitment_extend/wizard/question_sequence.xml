<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="set_sequence_job_wizard_form" model="ir.ui.view">
            <field name="name">set.sequence.job.wizard.form</field>
            <field name="model">set.sequence.job.wizard</field>
            <field name="arch" type="xml">
                <form string="Set Sequence">
                    <sheet>
                        
                        <notebook>
                            <page name="line_question" string="Question">
                                <field name="question_ids"  >
                                    <tree editable="bottom" create="0" delete="0">
                                       <field name="sequence" widget="handle"/>
                                       <field name="question_id"/>
                                    </tree>
                                    </field>
                        
                            </page>
                        </notebook>
                    </sheet>

                    <footer>
                        <button name="submit" type="object" string="Submit" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>

            </field>
        </record>


        <record id="set_sequence_job_wizard_action" model="ir.actions.act_window">
            <field name="name">Set Sequence Job Wizard</field>
            <field name="res_model">set.sequence.job.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


     

    </data>
</odoo>