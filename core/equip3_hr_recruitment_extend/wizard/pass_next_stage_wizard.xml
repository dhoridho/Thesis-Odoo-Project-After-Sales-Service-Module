<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="pass_to_next_stage_wizard_form" model="ir.ui.view">
            <field name="name">pass.to.next.stage.wizard.form</field>
            <field name="model">pass.next.stage.wizard</field>
            <field name="arch" type="xml">
                <form string="Pass to Next Stage Wizard">
                    <sheet>
                        <group string="Filter">
                            <group >
                                <field name="job_ids" widget="many2many_tags" />
                                <field name="stage_ids" widget="many2many_tags" />
                                
                            </group>
                           
                        </group>
                        <notebook>
                            <page name="applicant_page" string="Applicant">
                                <field name="applicant_ids" widget="many2many" >
                                    <tree>
                                       <field name="name"/>
                                       <field name="partner_name"/>
                                       <field name="job_id"/>
                                       <field name="stage_id"/>
                                    </tree>
                                    </field>
                        
                            </page>
                        </notebook>
                    </sheet>

                    <footer>
                        <button name="submit" type="object" string="Submit" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>

            </field>
        </record>


        <record id="pass_to_next_stage_wizard_action" model="ir.actions.act_window">
            <field name="name">Pass to next stage wizard</field>
            <field name="res_model">pass.next.stage.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


