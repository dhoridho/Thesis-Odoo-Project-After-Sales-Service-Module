<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="pass_next_stage_action_form" model="ir.ui.view">
            <field name="name">pass.next.stage.action.form</field>
            <field name="model">pass.next.stage.action</field>
            <field name="arch" type="xml">
                <form string="Pass to Next Stage">
                    <sheet>
                        <group>
                            <field name="name" nolabel="1"  readonly="1"/>
                        </group>
                        
                    </sheet>

                    <footer>
                        <button name="submit" type="object" string="Submit" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>

            </field>
        </record>


        <act_window name="Pass To Next Stage"
            id="pass_to_next_stage_action"
            res_model="pass.next.stage.action"
            binding_model="hr.applicant"
            binding_views="list"
            view_mode="form"
            target="new"
        />




    </data>
</odoo>