<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_applicant_refusal_reporting_form" model="ir.ui.view">
        <field name="name">applicant.refusal.reporting.form</field>
        <field name="model">applicant.refusal.reporting</field>
        <field name="arch" type="xml">
            <form string="Analysis" create="0" edit="0" delete="0">
                <sheet>
                    <group>
                        <field name="applicant_id" invisible="1"/>
                        <field name="job_id"/>
                        <field name="refuse_reason_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_applicant_refusal_reporting_tree" model="ir.ui.view">
        <field name="name">applicant.refusal.reporting.tree</field>
        <field name="model">applicant.refusal.reporting</field>
        <field name="arch" type="xml">
            <tree string="Analysis" create="0" edit="0" delete="0">
                <field name="applicant_id" invisible="1"/>
                <field name="job_id"/>
                <field name="refuse_reason_id"/>
            </tree>
        </field>
    </record>

    <record id="view_applicant_refusal_reporting_pivot" model="ir.ui.view">
         <field name="name">applicant.refusal.reporting.pivot</field>
         <field name="model">applicant.refusal.reporting</field>
         <field name="arch" type="xml">
             <pivot string="Applicant Refusal Reporting">
                 <field name="applicant_id" invisible="1"/>
                 <field name="job_id" type="row"/>
                 <field name="refuse_reason_id" type="col"/>
                 <field name="partner_name" invisible="1"/>
             </pivot>
         </field>
    </record>

    <record id="applicant_refusal_reporting_action_new" model="ir.actions.act_window">
        <field name="name">Applicant Refusal Reporting</field>
        <field name="res_model">applicant.refusal.reporting</field>
        <field name="view_mode">pivot</field>
        <field name="context">{}</field>
        <field name="view_id"></field>
    </record>

     <record model="ir.actions.act_window.view" id="act_applicant_refusal_reporting_pivot">
        <field name="sequence" eval="10"/>
        <field name="view_mode">pivot</field>
        <field name="view_id" ref="view_applicant_refusal_reporting_pivot"/>
        <field name="act_window_id" ref="applicant_refusal_reporting_action_new"/>
    </record>

    <menuitem name="Applicant Refusal Reporting" id="applicant_refusal_reporting_menu"
              parent="hr_recruitment.report_hr_recruitment" sequence="52" action="applicant_refusal_reporting_action_new"/>
</odoo>
