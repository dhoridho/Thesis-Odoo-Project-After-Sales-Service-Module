<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hr_quadrant_analysis_report_form" model="ir.ui.view">
        <field name="name">hr.quadrant.analysis.report.form</field>
        <field name="model">hr.quadrant.analysis.report</field>
        <field name="arch" type="xml">
            <form string="Analysis" create="0" edit="0">
                <group>
                    <group>
                        <field name="applicant_id"/>
                        <field name="applicant_name"/>
                        <field name="applicant_email"/>
                    </group>
                    <group>
                        <field name="job_id"/>
                        <field name="category_id"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="view_hr_quadrant_analysis_report_tree" model="ir.ui.view">
        <field name="name">hr.quadrant.analysis.report.tree</field>
        <field name="model">hr.quadrant.analysis.report</field>
        <field name="arch" type="xml">
            <tree string="Analysis" create="0">
                <field name="applicant_id"/>
                <field name="applicant_name"/>
                <field name="applicant_email"/>
                <field name="job_id"/>
                <field name="category_id"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_quadrant_analysis_report_pivot" model="ir.ui.view">
         <field name="name">hr.quadrant.analysis.report.pivot</field>
         <field name="model">hr.applicant</field>
         <field name="arch" type="xml">
             <pivot string="Analysis">
                 <field name="job_id" type="row"/>
                 <field name="category_id" type="col"/>
             </pivot>
         </field>
    </record>

    <record id="view_hr_quadrant_analysis_report_graph" model="ir.ui.view">
         <field name="name">view_hr_quadrant_analysis_report_graph</field>
         <field name="model">hr.applicant</field>
         <field name="arch" type="xml">
             <graph string="Quadrant Analysis" type="bar" orientation="vertical" stacked="True" sample="1">
                <field name="stage_id" type="col"/>
            </graph>
         </field>
    </record>

    <record id="hr_quadrant_analysis_report_action_new" model="ir.actions.act_window">
        <field name="name">Quadrant Analysis</field>
        <field name="res_model">hr.applicant</field>
        <field name="view_mode">graph,pivot</field>
        <field name="context">{}</field>
        <field name="view_id"></field>
    </record>
     <record model="ir.actions.act_window.view" id="act_hr_quadrant_analysis_pivot_report_applicant">
        <field name="sequence" eval="10"/>
        <field name="view_mode">pivot</field>
        <field name="view_id" ref="view_hr_quadrant_analysis_report_pivot"/>
        <field name="act_window_id" ref="hr_quadrant_analysis_report_action_new"/>
    </record>
    <record model="ir.actions.act_window.view" id="act_hr_quadrant_analysis_graph_report_applicant">
        <field name="sequence" eval="1"/>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="view_hr_quadrant_analysis_report_graph"/>
        <field name="act_window_id" ref="hr_quadrant_analysis_report_action_new"/>
    </record>

    <menuitem name="Quadrant Analysis" id="hr_quadrant_analysis_report_menu1"
                  parent="hr_recruitment.report_hr_recruitment" sequence="51" action="hr_quadrant_analysis_report_action_new"/>
</odoo>
