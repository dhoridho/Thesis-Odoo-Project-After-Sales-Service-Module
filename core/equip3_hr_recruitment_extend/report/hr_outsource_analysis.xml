<?xml version="1.0"?>
<odoo>

    <record id="hr_outsource_analysis_search_view" model="ir.ui.view">
        <field name="name">hr.outsource.analysis.search</field>
        <field name="model">hr.outsource.analysis</field>
        <field name="arch" type="xml">
            <search string="Outsource Analysis">
                <field name="partner_name"/>
                <field name="job_id"/>
                <field name="department_id"/>
            </search>
        </field>
    </record>

    <record id="hr_outsource_analysis_tree" model="ir.ui.view">
        <field name="name">hr.outsource.analysis.tree</field>
        <field name="model">hr.outsource.analysis</field>
        <field name="arch" type="xml">
            <tree create="0" delete="0">
                <field name="partner_name"/>
                <field name="job_id"/>
                <field name="department_id"/>
                <field name="work_location_id"/>
                <field name="user_id"/>
                <field name="stage_id"/>
            </tree>
        </field>
    </record>

    <record id="hr_outsource_analysis_form" model="ir.ui.view">
        <field name="name">hr.outsource.analysis.form</field>
        <field name="model">hr.outsource.analysis</field>
        <field name="arch" type="xml">
            <form string="Outsource Analysis" create="0" edit="0" delete="0">
                <header>
                    <button name="get_rate" string="Get Rate" type="object" class="oe_highlight" invisible="1"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="application_id" invisible="1"/>
                            <field name="name"/>
                            <field name="partner_name"/>
                            <field name="applicant_id"/>
                            <field name="job_id"/>
                            <field name="department_id"/>
                            <field name="work_location_id"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                            <field name="outsource_id"/>
                            <field name="rate" widget="percentage"/>
                            <field name="timestamp"/>
                            <field name="timestamp_date" invisible="1"/>
                            <field name="timestamp_month" invisible="1"/>
                            <field name="timestamp_year" invisible="1"/>
                            <field name="stage_id" invisible="1"/>
                            <field name="stage_replace_id" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_outsource_analysis_pivot" model="ir.ui.view">
        <field name="name">hr.outsource.analysis.pivot</field>
        <field name="model">hr.outsource.analysis</field>
        <field name="arch" type="xml">
            <pivot string="Outsource Analysis">
                <field name="timestamp_date" type="row"/>
                <field name="job_id" type="row"/>
                <field name="outsource_id" type="col"/>
                <field name="stage_id" type="col"/>
                <field name="rate" type="measure" widget="percentage"/>
            </pivot>
        </field>
    </record>

    <record id="hr_outsource_analysis_act_window" model="ir.actions.act_window">
        <field name="name">Outsource Analysis</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.outsource.analysis</field>
        <field name="view_mode">pivot,tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
    (0, 0, {'view_mode': 'pivot', 'view_id': ref('equip3_hr_recruitment_extend.hr_outsource_analysis_pivot')}),
    (0, 0, {'view_mode': 'tree', 'view_id': ref('equip3_hr_recruitment_extend.hr_outsource_analysis_tree')}),
    (0, 0, {'view_mode': 'form', 'view_id': ref('equip3_hr_recruitment_extend.hr_outsource_analysis_form')})]"/>
        <field name="context">{}</field>
        <field name="domain">[]</field>
    </record>

    <menuitem name="Outsource Analysis" id="hr_outsource_analysis_menu"
    parent="hr_recruitment.report_hr_recruitment"
    action="hr_outsource_analysis_act_window" sequence="50"/>

    <!-- Outsource Analysis by Applicant Date -->
    <record id="hr_outsource_analysis_by_applicant_date_form" model="ir.ui.view">
        <field name="name">hr.outsource.analysis.by.applicant.date.form</field>
        <field name="model">hr.outsource.analysis</field>
        <field name="arch" type="xml">
            <form string="Outsource Analysis" create="0" edit="0" delete="0">
                <header>
                    <button name="get_rate_by_applicant_date" string="Get Rate" type="object" class="oe_highlight" invisible="1"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="application_id" invisible="1"/>
                            <field name="name"/>
                            <field name="partner_name"/>
                            <field name="applicant_id"/>
                            <field name="job_id"/>
                            <field name="department_id"/>
                            <field name="work_location_id"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                            <field name="outsource_id"/>
                            <field name="rate_by_aplicant_date" string="Rate" widget="percentage"/>
                            <field name="aplicant_create_date" invisible="1"/>
                            <field name="aplicant_create_date_month" invisible="1"/>
                            <field name="aplicant_create_date_year" invisible="1"/>
                            <field name="stage_id" invisible="1"/>
                            <field name="stage_replace_id" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_outsource_analysis_by_applicant_date_pivot" model="ir.ui.view">
        <field name="name">hr.outsource.analysis.by.applicant.date.pivot</field>
        <field name="model">hr.outsource.analysis</field>
        <field name="arch" type="xml">
            <pivot string="Outsource Analysis">
                <field name="aplicant_create_date" type="row"/>
                <field name="job_id" type="row"/>
                <field name="outsource_id" type="col"/>
                <field name="stage_id" type="col"/>
                <field name="rate_by_aplicant_date" string="Rate" type="measure" widget="percentage"/>
            </pivot>
        </field>
    </record>

    <record id="hr_outsource_analysis_by_applicant_date_act_window" model="ir.actions.act_window">
        <field name="name">Outsource Analysis by Applicant Date</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.outsource.analysis</field>
        <field name="view_mode">pivot,tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
    (0, 0, {'view_mode': 'pivot', 'view_id': ref('equip3_hr_recruitment_extend.hr_outsource_analysis_by_applicant_date_pivot')}),
    (0, 0, {'view_mode': 'tree', 'view_id': ref('equip3_hr_recruitment_extend.hr_outsource_analysis_tree')}),
    (0, 0, {'view_mode': 'form', 'view_id': ref('equip3_hr_recruitment_extend.hr_outsource_analysis_by_applicant_date_form')})]"/>
        <field name="context">{}</field>
        <field name="domain">[]</field>
    </record>

    <menuitem name="Outsource Analysis by Applicant Date" id="hr_outsource_analysis_by_applicant_date_menu"
    parent="hr_recruitment.report_hr_recruitment"
    action="hr_outsource_analysis_by_applicant_date_act_window" sequence="50"/>

</odoo>
