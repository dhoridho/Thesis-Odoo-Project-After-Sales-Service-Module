<odoo>
<data>

    <template id="technical_test_template_print" >
        <t t-call="web.basic_layout">
            	<t t-foreach="docs" t-as="doc">
                    <t t-call="equip3_hr_recruitment_extend.survey_page_print">
	                
	            </t>
            </t>
        </t>
	</template>


    <record id="technical_test_template" model="ir.actions.report">
        <field name="name">Technical Test</field>
        <field name="model">survey.survey</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">equip3_hr_recruitment_extend.technical_test_template_print</field>
        <field name="report_file">equip3_hr_recruitment_extend.technical_test_template_print</field>
        <field name="attachment_use">1</field>
        <field name="print_report_name">'%s'% (object.title) </field>
    </record>
    
   <template id="hr_offering_letter_report_template">
        <t t-call="web.html_container">
            <t t-call="equip3_hr_recruitment_extend.recruitment_custom_header_template"/>
            <div class="article o_report_layout_standard" t-att-data-oe-model="doc and doc._name" t-att-data-oe-id="doc and doc.id">
                <t t-foreach="docs" t-as="doc">
                    <div class="page">
                        <div class="row">
                            <div class="col-xs-12">
                                <div t-raw="doc.print_offering_letter()"/>
                            </div>
                        </div>
                    </div>
                </t>
            </div>
        </t>
    </template>

    <template id="recruitment_custom_header_template">
        <t t-set="company" t-value="user.company_id"/>
        <div class="header">
            <div class="row" style="font-family: 'Trebuchet MS', sans-serif;">
                <div class="col-4">
                    <img t-if="company.logo" 
                         t-att-src="image_data_uri(company.logo)" 
                         style="max-width:100%; max-height:80px;" 
                         alt="Logo"/>
                </div>
                <div class="col-8 mt-2 text-right">
                    <div t-field="company.partner_id"
                        t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
                </div>
            </div>
            <div t-if="company.logo or company.report_header" class="row zero_min_height">
                <div class="col-12 mt-2">
                    <div style="border-bottom: 1px solid black;"/>
                </div>
            </div>
        </div>

        <div class="footer">
            <div class="text-center" style="border-top: 1px solid black;">
                <ul class="list-inline mb4">
                    <li t-if="company.phone" class="list-inline-item d-inline"><span class="o_force_ltr" t-field="company.phone"/></li>
                    <li t-if="company.email" class="list-inline-item d-inline"><span t-field="company.email"/></li>
                    <li t-if="company.website" class="list-inline-item d-inline"><span t-field="company.website"/></li>
                    <li t-if="company.vat" class="list-inline-item d-inline"><t t-esc="company.country_id.vat_label or 'Tax ID'"/>: <span t-field="company.vat"/></li>
                </ul>

                <div name="financial_infos">
                    <span t-field="company.report_footer"/>
                </div>

                <div t-if="report_type == 'pdf'" class="text-muted">
                    Page: <span class="page"/> / <span class="topage"/>
                </div>
            </div>
        </div>
    </template>

    <record id="hr_offering_letter_report" model="ir.actions.report">
        <field name="name">Offering Letter</field>
        <field name="model">hr.offering.request.line</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">equip3_hr_recruitment_extend.hr_offering_letter_report_template</field>
        <field name="report_file">equip3_hr_recruitment_extend.hr_offering_letter_report_template</field>
        <field name="attachment_use">1</field>
        <field name="binding_model_id" ref="equip3_hr_recruitment_extend.model_hr_offering_request_line"/>
        <field name="paperformat_id" ref="base.paperformat_euro"/>
        <field name="print_report_name">'Offering Letter - %s' % (object.applicant_id.partner_name)</field>
    </record>

</data>


</odoo>