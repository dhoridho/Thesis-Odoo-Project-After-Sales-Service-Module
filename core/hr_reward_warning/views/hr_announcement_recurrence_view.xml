<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.cron" id="hr_announcement_recurrence_update_status">
            <field name="name">HR Announcement Recurrences update status</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="model_hr_announcement_recurrence"/>
            <field name="nextcall" eval="datetime.now() + (datetime.now(pytz.timezone('Asia/Jakarta')).replace(hour=00, minute=1, second=00) - datetime.now(pytz.timezone('Asia/Jakarta'))) % timedelta(hours=24)"/>
            <field name="state">code</field>
            <field name="code">model.action_cron_recurrent()</field>
        </record>

        <record id="view_hr_announcement_recurrence_form" model="ir.ui.view">
            <field name="name">hr.announcement.recurrence.form</field>
            <field name="model">hr.announcement.recurrence</field>
            <field name="arch" type="xml">
                <form create="0" edit="0">
                    <sheet>
                        <group>
                            <group>
                                <field name="announcement_id"/>
                                <field name="recurrence_date_start"/>
                                <field name="recurrence_date_end"/>
                                <field name="state"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_hr_announcement_recurrence_tree" model="ir.ui.view">
            <field name="name">hr.announcement.recurrence.tree</field>
            <field name="model">hr.announcement.recurrence</field>
            <field name="arch" type="xml">
                <tree create="0" edit="0">
                    <field name="announcement_id"/>
                    <field name="recurrence_date_start"/>
                    <field name="recurrence_date_end"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="act_hr_announcement_recurrence_list" model="ir.actions.act_window">
            <field name="res_model">hr.announcement.recurrence</field>
            <field name="name">Recurrence Announcement</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>