<?xml version="1.0" ?>
<odoo>
    <data>
        <!--Email template -->
        <record id="email_template_announcement" model="mail.template">
            <field name="name">Announcement</field>
            <field name="model_id" ref="hr_reward_warning.model_hr_announcement"/>
            <field name="email_from">${(user.email or '')}</field>
            <field name="email_to">${object.get_emp_ids(object.email_employee_ids) |safe}</field>
            <field name="subject">${object.announcement_reason |safe}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        % if object.is_announcement:
                        <b>
                            Dear All,
                        </b>
                        % endif
                        % if object.announcement_type == 'employee'
                        <b>
                            Dear ${object.get_emp_name(object.email_employee_ids) |safe},
                        </b>
                        % endif
                        % if object.announcement_type == 'department'
                        <b>
                            Dear ${object.get_dept_name(object.department_ids) |safe},
                        </b>
                        % endif
                        % if object.announcement_type == 'job_position'
                        <b>
                            Dear ${object.get_job_name(object.position_ids) |safe},
                        </b>
                        % endif
                        <br/>
                        <br/>
                        <p>
                            <strong>${object.announcement_reason|safe} - ${object.name|safe}</strong>
                        </p>
                        <br/>
                        <p>${object.announcement |safe}</p>
                    </p>
                    <br/>
                    <p>Thank you.</p>
                </div>
            </field>
            <field name="lang">${object.env.context.get("lang")}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>