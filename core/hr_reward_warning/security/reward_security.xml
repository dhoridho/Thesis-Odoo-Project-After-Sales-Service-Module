<?xml version="1.0" ?>
<odoo>

<data noupdate="1">

    <record model="ir.module.category" id="module_category_hr_reward_warning">
        <field name="name">Announcement</field>
        <field name="description">Helps you manage your Announcement.</field>
        <field name="parent_id" ref="base.module_category_human_resources"/>
        <field name="sequence">17</field>
    </record>

    <record id="hr_reward_warning.group_hr_reward_warning_user" model="res.groups">
        <field name="name">Self Service</field>
        <field name="category_id" ref="hr_reward_warning.module_category_hr_reward_warning"/>
    </record>

    <record id="hr_reward_warning.group_hr_reward_warning_department_leader" model="res.groups">
        <field name="name">Department Leader</field>
        <field name="category_id" ref="hr_reward_warning.module_category_hr_reward_warning"/>
        <field name="implied_ids" eval="[(4, ref('hr_reward_warning.group_hr_reward_warning_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>


    <record id="hr_reward_warning.group_hr_reward_warning_hr_manager" model="res.groups">
        <field name="name">HR Manager</field>
        <field name="category_id" ref="hr_reward_warning.module_category_hr_reward_warning"/>
        <field name="implied_ids" eval="[(4, ref('hr_reward_warning.group_hr_reward_warning_department_leader'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="property_rule_announcement" model="ir.rule">
        <field name="name">Announcement Multi Company</field>
        <field name="model_id" ref="model_hr_announcement"/>
        <field eval="True" name="global"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>
    </data>
</odoo>
