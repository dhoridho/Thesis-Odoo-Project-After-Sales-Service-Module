<?xml version="1.0"?>
<odoo>
<data>

    <record model="ir.ui.view" id="view_acrux_chat_connector_form">
        <field name="name">acrux.chat.connector.form.qiscuss</field>
        <field name="model">acrux.chat.connector</field>
        <field name="inherit_id" ref="acrux_chat.view_acrux_chat_connector_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
<!--                <button name="qc_get_settings" type="object" string="Get Setting"-->
<!--                        class="oe_stat_button" icon="fa-cog"-->
<!--                        attrs="{'invisible':[('connector_type','!=', 'qiscuss'), ('qc_status','=', False)]}"/>-->
                <button name="del_and_recreate_image_chat" type="object" string="Refresh size images"
                        class="oe_stat_button" icon="fa-cog"
                        attrs="{'invisible':[('connector_type','!=', 'qiscuss')]}"
                        title="Size for all connector! Set size in Config Parameters."/>
                <button name="qc_get_chat_list" type="object" string="Get Chat List"
                        class="oe_stat_button" icon="fa-cog"
                        attrs="{'invisible':[('connector_type','!=', 'qiscuss'), ('qc_status','=', False)]}"/>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="after">
                <widget name="web_ribbon" title="Disconnected" bg_color="bg-danger"
                        attrs="{'invisible': ['|', ('connector_type','!=', 'qiscuss'), ('qc_status', '=', True)]}"/>
                <widget name="web_ribbon" title="Connected" bg_color="bg-success"
                        attrs="{'invisible': ['|', ('connector_type','!=', 'qiscuss'), ('qc_status', '=', False)]}"/>
            </xpath>
            <xpath expr="//group[@name='connector']" position="before">
                <group string="Qiscuss" attrs="{'invisible':[('connector_type','!=', 'qiscuss')]}">
                    <field name="qc_status" readonly="1" force_save="1"/>
                    <field name="connection_status" invisible="1"/>
                    <field name="qc_app_name" force_save="1" attrs="{'required':[('connector_type', '=', 'qiscuss')]}"/>
                    <field name="source"/>
                    <field name="qc_channel"/>
                    <field name="uuid" invisible="1" force_save="1"/>
                    <field name="qc_channel_id" attrs="{'required':[('connector_type', '=', 'qiscuss')]}"/>
                    <field name="qc_webhook_url"/>
                    <field name="time_to_respond" invisible="1"/>
                    <field name="qc_sdk_token" invisible="1" force_save="1"/>
                </group>
            </xpath>
            <xpath expr="//group[@name='connector']" position="after">
                <group string="Configuration Instructions"
                     attrs="{'invisible':[('connector_type','!=', 'qiscuss')]}">
                    <div class="col-12 o_setting_box">
                        <div class="o_setting_left_pane" style="width: 50px;">
                            <label for="endpoint" string="Step 1" style="font-weight: bold;"/>
                        </div>
                        <div class="o_setting_right_pane" style="margin-left: 50px;">
                            <div class="content-group">
                                <b>API URL:</b><br/>
                                <field name="endpoint"/>
                            </div>
                        </div>

                        <div class="o_setting_left_pane" style="width: 50px;">
                            <label for="apikey" string="Step 2" style="font-weight: bold;"/>
                        </div>
                        <div class="o_setting_right_pane" style="margin-left: 50px;">
                            <div class="content-group">
                                <b>Access Key:</b><br/>
                                <field name="apikey" password="True"/>
                            </div>
                        </div>

                        <div class="o_setting_left_pane" style="width: 50px;">
                            <label for="qc_qr_code" string="Step 3" style="font-weight: bold;"/>
                        </div>
                        <div class="o_setting_right_pane" style="margin-left: 50px;">
                            <b>Connect:</b><br/>
                            <div attrs="{'invisible':[('qc_status','=', False)]}">
                                <div class="list-group">
                                    <div class="list-group-item list-group-item-success" style="width: fit-content;">
                                        Status: <b>Connected</b><span class="spinner-grow spinner-grow-sm"/><br/><br/>
                                        <button name="qc_get_status" type="object" string="Check Status"
                                                class="btn-primary" icon="fa-cog" style="margin-right: 16px;"/>
                                        <button name="qc_set_logout" type="object" string="Logout from WhatsApp Web"
                                                class="btn-primary" icon="fa-cog"/>
                                    </div>
                                </div>
                            </div>
                            <div attrs="{'invisible':[('qc_status','=', True)]}">
                                <div attrs="{'invisible':[('qc_qr_code','!=', False)]}">
                                    You need to scan the QR code from the device on which WhatsApp is registered.<br/>
                                    QR code is valid for 40 seconds.<br/>
                                    <div class="mb16 mt8">
                                        <button name="qc_get_status" type="object" string="Get Status"
                                                class="btn-primary" icon="fa-cog"/>
                                    </div>
                                    If you get an error, please click here to refresh your QR Code and try again.
                                    <div class="mb16 mt8">
                                        <button name="qc_set_logout" type="object" string="Logout from WhatsApp Web"
                                                class="btn-primary" icon="fa-cog"/>
                                    </div>
                                </div>
                                <div attrs="{'invisible':[('qc_qr_code','=', False)]}">
                                    <div class="list-group">
                                        <div class="list-group-item list-group-item-info" style="width: fit-content;">
                                            Scan QR code from your phone and click here to read Status:
                                            <button name="qc_get_status" type="object" string="Get Status"
                                                    class="btn-primary btn-sm" icon="fa-cog"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="content-group">
                                <field name="qc_qr_code" widget="image" readonly="1" force_save="1"/>
                            </div>
                        </div>
                    </div>
                </group>
                <group string="Qiscus Templates"
                     attrs="{'invisible':[('connector_type','!=', 'qiscuss')]}">
                    <div class="col-12 o_setting_box">
                        <button name="qc_get_templates" type="object" string="Get Templates"
                        class="oe_stat_button" icon="fa-ticket" attrs="{'readonly':[('qc_status','!=', 'True')]}"/>
                        <field name="qc_template_ids" widget="one2many" nolabel="1">
                            <tree string="Attributes" edit="0" create="0" delete="0">
                                <field name="qiscus_template_id" string="ID"/>
                                <field name="name"/>
                                <field name="namespace"/>
                            </tree>
                        </field>
                    </div>

                </group>

            </xpath>
            <xpath expr="//sheet" position="inside">
                <group string="Information" col="1" colspan="4" attrs="{'invisible':[('connector_type','!=', 'qiscuss')]}">
                    <ul>
                        <li>Your account can be banned by anti-spam system WhatsApp after several clicking the "block" button.</li>
                        <li>Message files will be stored for 30 days and then deleted.</li>
                        <li>Limit: 6.000 message per day.</li>
                    </ul>
                    <div class="list-group col-sm-12">
                        <div class="list-group-item text-danger">
                            <strong>Chat-Api Terms of Service</strong><br/><br/>
                            <div>
                                1. Qiscuss is unofficial and independent of WhatsApp Inc.<br/>
                                2. You agree not to use the Qiscuss service for spam and bulk messaging.<br/>
                                3. By authorizing the phone number (messenger account) in the Qiscuss service, you agree that Qiscuss will have full access to the authorized account in the messenger.<br/>
                                4. Qiscuss has the right to block your access to the service in case of violation of the "Public Agreement" or "Message Content Requirements".
                            </div>
                            <br/>
                            Authorising your number you agree on our terms of service. We advise you to read our tips on using Qiscuss.
                        </div>
                    </div>
                </group>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_acrux_chat_connector_tree">
        <field name="model">acrux.chat.connector</field>
        <field name="inherit_id" ref="acrux_chat.view_acrux_chat_connector_tree"/>
        <field name="arch" type="xml">
        <field name="company_id" position="after">
            <field name="qc_channel_id"/>
            <field name="team_id"/>
            <field name="source"/>
            <field name="connection_status"/>
        </field>
        </field>
    </record>

</data>
</odoo>
