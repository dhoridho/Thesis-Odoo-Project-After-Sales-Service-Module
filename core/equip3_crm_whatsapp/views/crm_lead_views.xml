<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="crm_lead_view_form_acrux_chat" model="ir.ui.view">
        <field name="name">crm.lead.view.form.acrux.chat</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="equip3_crm_operation.crm_lead_view_form_inherit"/>
        <field name="mode">primary</field>
        <field name="priority" eval="1000"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@name='col_1']" position="attributes">
                <attribute name="class">col-6</attribute>
            </xpath>
            <xpath expr="//div[@name='col_2']" position="attributes">
                <attribute name="class">col-6</attribute>
            </xpath>
            <xpath expr="//div[@name='col_3']" position="replace"/>

            <xpath expr="//div[@name='col_1']" position="inside">
                <group name="marketing">
                    <field name="campaign_id" />
                    <field name="medium_id" />
                    <field name="source_id" />
                </group>
                <group name="Misc">
                    <field name="day_open" groups="base.group_no_one"/>
                    <field name="day_close" groups="base.group_no_one"/>
                    <field name="referred"/>
                    <field name="create_date"/>
                    <field name="type" invisible="1"/>
                </group>
            </xpath>

            <xpath expr="//field[@name='salesperson_lines']" position="replace"/>

            <xpath expr="//notebook" position="replace">
                <notebook>
                    <page name="salesperson_lines" string="Salesperson" groups="equip3_crm_operation.group_use_multi_salesperson_on_leads">
                        <field name="salesperson_lines">
                            <tree string="Salesperson" editable="bottom" delete="1">
                                <field name='salesperson_id'/>
                                <field name='weightage'/>
                                <field name='status'/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>

        </field>
    </record>

</odoo>