<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <menuitem id="crm_wa_menu_roots"
              name="ChatRoom"
              web_icon="acrux_chat,static/description/settings.png"
                sequence="2"/>

    <record id="acrux_chat.acrux_live_chat_conversation_menu" model="ir.ui.menu">
        <field name="parent_id" ref="equip3_crm_whatsapp.crm_wa_menu_roots"/>
        <field name="sequence">1</field>
        <field name="name">Chat Room</field>
    </record>

    <record id="acrux_chat.menu_chatroom_report_root" model="ir.ui.menu">
        <field name="parent_id" ref="equip3_crm_whatsapp.crm_wa_menu_roots"/>
    </record>

    <record id="acrux_chat.acrux_chat_message_menu" model="ir.ui.menu">
        <field name="groups_id" eval="[(6, 0, ())]"/>
    </record>

    <record id="acrux_chat.view_acrux_chat_default_answer_menu" model="ir.ui.menu">
        <field name="groups_id" eval="[(6, 0, ())]"/>
    </record>

    <record id="acrux_chat.acrux_chat_conversation_menu" model="ir.ui.menu">
        <field name="groups_id" eval="[(6, 0, ())]"/>
    </record>

    <record model="ir.ui.view" id="view_acrux_chat_conversation_form_inherit">
        <field name="name">acrux.chat.conversation.form.inherit</field>
        <field name="model">acrux.chat.conversation</field>
        <field name="inherit_id" ref="acrux_chat.view_acrux_chat_conversation_form"/>
        <field name="priority">16</field>
        <field name="arch" type="xml">
            <field name="connector_id" position="after">
                <field name="team_ids" invisible="1"/>
                <field name="connector_id" widget="selection" domain="[('team_id','in',team_ids)]"/>
            </field>
        </field>
    </record>

    <menuitem id="menu_chatroom_main"
              name="ChatRoom"
              sequence="1"
              parent="crm_wa_menu_roots"
              />

    <menuitem action="acrux_chat.view_acrux_chat_conversation_action"
              id="chatroom_acrux_chat_conversation_menu"
              parent="menu_chatroom_main"
              sequence="110"
              groups="acrux_chat.group_chat_basic_extra"/>

    <menuitem action="acrux_chat.view_acrux_chat_default_answer_action"
              id="chatroom_view_acrux_chat_default_answer_menu"
              parent="menu_chatroom_main"
              sequence="130"
              groups="acrux_chat.group_chat_basic_extra"/>

    <menuitem action="acrux_chat.view_acrux_chat_message_action"
              id="chatroom_acrux_chat_message_menu"
              parent="menu_chatroom_main"
              sequence="120"
              groups="acrux_chat.group_chat_basic_extra"/>

</odoo>