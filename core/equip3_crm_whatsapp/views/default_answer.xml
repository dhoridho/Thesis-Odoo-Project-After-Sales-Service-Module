<?xml version="1.0"?>
<odoo>
<data>

    <record model="ir.ui.view" id="view_qiscus_default_answer_tree">
        <field name="name">qiscus.default.answer.tree</field>
        <field name="model">acrux.chat.default.answer</field>
        <field name="inherit_id" ref="acrux_chat.view_acrux_chat_default_answer_tree"/>
        <field name="arch" type="xml">
            <field name="res_id" position="after">
                <field name="template_id"/>
            </field>
            <field name="ttype" position="after">
                <field name="default_answer_type"/>
            </field>
            <field name="ttype" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="view_qiscus_default_answer_form">
        <field name="name">qiscus.default.answer.form</field>
        <field name="model">acrux.chat.default.answer</field>
        <field name="inherit_id" ref="acrux_chat.view_acrux_chat_default_answer_form"/>
        <field name="arch" type="xml">
            <field name="text" position="after">
                <field name="template_id" options="{'no_create': True}"/>
            </field>
        </field>
    </record>
</data>
</odoo>