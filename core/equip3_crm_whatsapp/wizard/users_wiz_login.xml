<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="qiscuss_wizard_login_form" model="ir.ui.view">
        <field name="name">qiscuss.wizard.login.form</field>
        <field name="model">res.users.qiscuss</field>
        <field name="arch" type="xml">
            <form string="Login" class="oe_login_form" role="form">
                <style>
                    .modal .modal-dialog {
                        transform: translateY(-100px);
                        transition: all .5s;
                        max-width: 300px;
                    }
                </style>
                <div class="d-flex justify-content-center">
                    <div class="content-group">
                        <b>Email:</b><br/>
                        <field name="email" required="1"/>
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <div class="content-group">
                        <b>Password:</b><br/>
                        <field name="password" password="True" required="1"/>
                    </div>
                </div>
                <footer>
                    <button string="Submit" name="submit_user_login" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_highlight" special="cancel"/>
                </footer>
           </form>
        </field>
    </record>
</odoo>
