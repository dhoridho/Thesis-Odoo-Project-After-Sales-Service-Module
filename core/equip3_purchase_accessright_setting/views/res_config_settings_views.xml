                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="view_form_res_config_settings_purchase_order_approv" model="ir.ui.view">
        <field name="name">res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='po_order_approval']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="sh_purchase_config_purchase_revisions_form_inherit" model="ir.ui.view">
        <field name="name">sh.purchase.config.purchase.revisions.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sh_purchase_revisions.sh_purchase_config_purchase_revisions_form_inherit" />
        <field name="arch" type="xml">
            <xpath expr="//h2[.='Purchase Revisions']" position="replace">
            </xpath>
            <xpath expr="//div[@data-key='purchase']/div[2]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>