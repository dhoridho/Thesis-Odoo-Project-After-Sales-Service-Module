<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_form_res_config_settings_vendor_approval_matrix" model="ir.ui.view">
        <field name="name">res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='purchase_setting_container']" position="after">
                <div class="app_settings_block" name="approval_matrix" invisible="1">
                    <h2>Approval Matrix</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_vendor_approval_matrix"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_vendor_approval_matrix"/>
                                <div class="text-muted">
                                    Set The Vendor Approval Matrix.
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_vendor_pricelist_approval_matrix"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_vendor_pricelist_approval_matrix"/>
                                <div class="text-muted">
                                    Set The Vendor Pricelist Approval Matrix.
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_purchase_order_approval_matrix"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_purchase_order_approval_matrix"/>
                                <div class="text-muted">
                                    Set The Purchase Order Approval Matrix.
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_purchase_request_approval_matrix"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_purchase_request_approval_matrix"/>
                                <div class="text-muted">
                                    Set The Purchase Request Approval Matrix.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.implementor.form.inherit.base.setup</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="0"/>
        <field name="inherit_id" ref="equip3_general_setting.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='implementor_purchase']/div[@class='o_setting_right_pane']/label" position="attributes">
                <attribute name="string">Purchase</attribute>
            </xpath>
            <xpath expr="//div[@id='implementor_purchase']" position="after">
                <div class="row mt16 o_settings_container" attrs="{'invisible':[('purchase','=',False)]}">
                    <div class="col-12 col-lg-6 o_setting_box" id="vendor_approval_div">
                        <div class="o_setting_left_pane">
                            <field name="is_vendor_approval_matrix"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_vendor_approval_matrix"/>
                            <div class="text-muted">
                                Set The Vendor Approval Matrix.
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible':[('purchase','=',False)]}">
                        <div class="o_setting_left_pane">
                            <field name="is_vendor_pricelist_approval_matrix"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_vendor_pricelist_approval_matrix"/>
                            <div class="text-muted">
                                Set The Vendor Pricelist Approval Matrix.
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible':[('purchase','=',False)]}">
                        <div class="o_setting_left_pane">
                            <field name="is_purchase_order_approval_matrix"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_purchase_order_approval_matrix"/>
                            <div class="text-muted">
                                Set The Purchase Order Approval Matrix.
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible':[('purchase','=',False)]}">
                        <div class="o_setting_left_pane">
                            <field name="is_purchase_request_approval_matrix"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_purchase_request_approval_matrix"/>
                            <div class="text-muted">
                                Set The Purchase Request Approval Matrix.
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible':[('purchase','=',False)]}">
                        <div class="o_setting_left_pane">
                            <field name="is_blanket_order_approval_matrix"/>
