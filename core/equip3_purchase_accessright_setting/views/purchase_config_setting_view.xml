<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="purchase_config_setting_view_form" model="ir.ui.view">
            <field name="name">purchase.config.settings.view.form</field>
            <field name="model">purchase.config.settings</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Save" type="object" name="save_config" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                        <div class="o_form_status" name="unsaved_changes" style="color:red; font-weight: bold;">
                            Unsaved Changes
                        </div>
                    </header>
                    <sheet>
                        <group name="purchase_order_group" string="Purchase Orders">
                            <div class="row mt16 o_settings_container" name="purchase_order_name_div">
                                <div class="col-12 col-lg-12 o_setting_box" id="purchase_order_id_div">
                                    <div>
                                        <field name="company_id" invisible="1"/>
                                        <div class="row mt16 o_settings_container">
                                            <div class="col-xs-12 col-md-6 o_setting_box">
                                                <div class="o_setting_left_pane">
                                                    <field name="purchase_revision"/>
                                                </div>
                                                <div class="o_setting_right_pane">
                                                    <label for="purchase_revision"/>
                                                    <div class="text-muted">
                                                        Enable Purchase Revisions
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mt16 o_settings_container" attrs = "{'invisible' : [('purchase_revision', '=', False)]}">
                                            <div class="col-xs-12 col-md-6 o_setting_box">
                                                <div class="o_setting_left_pane"/>
                                                <div class="o_setting_right_pane">
                                                    <label for="reference_formatting"/>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row o_settings_container" attrs = "{'invisible' : [('purchase_revision', '=', False)]}">
                                            <div class="col-xs-12 col-md-6 o_setting_box">
                                                <div class="o_setting_left_pane"/>
                                                <div class="o_setting_right_pane">
                                                    <field name="reference_formatting" widget="radio" readonly="False" nolabel="1"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="purchase_config_setting_action" model="ir.actions.act_window">
            <field name="name">Purchase Setting</field>
            <field name="res_model">purchase.config.settings</field>
            <field name="view_mode">form</field>
            <field name="res_id" ref="equip3_purchase_accessright_setting.purchase_setting_1"/>
            <field name="target">inline</field>
<!--            <field name="context">{'form_view_initial_mode': 'edit'}</field>-->
        </record>

        <menuitem
                id="purchase_setting_root_menu"
                name="Purchase Settings"
                parent="purchase.menu_purchase_root"
                sequence="999"/>

        <menuitem
                id="sub_setting_purchase"
                name="Settings"
                action="purchase_config_setting_action"
                parent="purchase_setting_root_menu"
                sequence="1"/>

    </data>
</odoo>
