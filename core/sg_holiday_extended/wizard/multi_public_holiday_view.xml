<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="multi_public_holiday_form_view" model="ir.ui.view">
        <field name="name">multi.public.holiday.form</field>
        <field name="model">multi.public.holiday</field>
        <field name="arch" type="xml">
            <form name="public_holiday" string="Public Holiday">
                <group col="4">
                    <field name="name"/><newline/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
                <footer>
                    <button name="cerate_public_holiday" string="Create"
                        type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- action for mass editing -->
    <record id="action_applied_on_quotation" model="ir.actions.act_window">
        <field name="name">Multi Publlic Holiday</field>
        <field name="res_model">multi.public.holiday</field>
        <field name="binding_model_id" ref="model_hr_holiday_public"/>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
