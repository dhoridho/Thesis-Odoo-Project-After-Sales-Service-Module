<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="employee_public_holiday_report">
        <t t-call="web.html_container">
            <t t-set="data_report_margin_top" t-value="50"/>
            <t t-set="data_report_header_spacing" t-value="45"/>
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <style>
                            .padding {
                            padding-top:3px;
                            padding-bottom:3px;
                            padding-left:3px;
                            padding-right:3px;
                            }

                            .border {
                            border:1px solid
                            black;
                            border-collapse:collapse;
                            }

                        </style>
                        <center><h3>Public Holiday Report</h3></center>
                        <table width="100%">
                            <tr>
                                <th class="padding" style="font-size:15px;text-align: center;">
                                    <span t-field="o.name" />
                                </th>
                            </tr>
                        </table>
                        <table width="100%" class="border">
                            <tr class="border padding" style="font-size:13px;text-align: center;">
                                <th class="border padding">
                                    Date
                                 </th>
                                <th class="border padding">
                                    Day
                                 </th>
                                <th class="border padding">
                                    Reason
                                 </th>
                            </tr>
                            <tr t-foreach="o.holiday_line_ids" class="border padding"
                                t-as="holiday_line" style="font-size:12px;text-align: left;page-break-inside:avoid;">
                                <td class="border padding">
                                    <span
                                        t-esc="time.strftime('%m-%d-%Y',time.strptime(holiday_line.holiday_date.strftime('%Y-%m-%d'),'%Y-%m-%d'))" />
                                </td>
                                <td class="border padding">
                                    <span t-field="holiday_line.day" />
                                </td>
                                <td class="border padding">
                                    <span t-field="holiday_line.name" />
                                </td>
                            </tr>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <!-- Employee Holiday Report Menu -->
    <record id="employee_holiday_report" model="ir.actions.report">
        <field name="name">Public Holiday Report</field>
        <field name="model">hr.holiday.public</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sg_holiday_extended.employee_public_holiday_report</field>
        <field name="binding_model_id" ref="model_hr_holiday_public"/>
        <field name="binding_type">report</field>
    </record>

</odoo>
