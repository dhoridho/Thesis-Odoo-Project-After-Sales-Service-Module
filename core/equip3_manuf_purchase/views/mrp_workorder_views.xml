<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_mrp_workorder_form" model="ir.ui.view">
        <field name="name">view.mrp.workorder.form</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="equip3_manuf_inventory.view_mrp_workorder_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_transfer_request']" position="after">
                <button name="action_purchase_request" type="object" string="Submit Purchase Request" states="ready,progress" class="ml-2 oe_inline oe_highlight"/>
            </xpath>

            <xpath expr="//button[@name='action_view_transfer_request']" position="after">
                <button type="object" name="action_view_purchase_request" class="oe_stat_button" icon="o-hm-smart-all-purchased" attrs="{'invisible': [('purchase_request_count', '=', 0)]}">
                    <div class="o_field_widget o_stat_info">
                        <span style="text-wrap: wrap;"><field name="purchase_request_count" widget="statinfo" nolabel="1"/> Purchase Requests</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

</odoo>