<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_mrp_production_form" model="ir.ui.view">
        <field name="name">view.mrp.production.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="equip3_manuf_inventory.view_mrp_production_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <field name="mrp_allow_submit_pr" invisible="1"/>
            </xpath>

            <xpath expr="//button[@name='action_transfer_request']" position="after">
                <button name="action_purchase_request" type="object" string="Submit Purchase Request" class="ml-2 oe_inline oe_highlight" attrs="{'invisible': ['|', ('mrp_allow_submit_pr', '=', False), ('state', 'not in', ('confirmed', 'progress'))]}"/>
            </xpath>

            <xpath expr="//button[@name='action_view_transfer_good']" position="after">
                <button type="object" name="action_view_purchase_request" class="oe_stat_button" icon="o-hm-smart-all-purchased" attrs="{'invisible': [('purchase_request_count', '=', 0)]}">
                    <div class="o_field_widget o_stat_info">
                        <span style="text-wrap: wrap;"><field name="purchase_request_count" widget="statinfo" nolabel="1"/> Purchase Requests</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

</odoo>