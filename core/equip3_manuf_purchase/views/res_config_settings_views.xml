<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="equip3_manuf_inventory.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='mrp_allow_submit_mr_pp_container']" position="before">
                <div class="col-lg-6 col-12 o_setting_box" name="mrp_allow_submit_pr_pp_container">
                    <div class="o_setting_left_pane">
                        <field name="mrp_allow_submit_pr_pp"/>
                    </div>

                    <div class="o_setting_right_pane">
                        <label for="mrp_allow_submit_pr_pp" string="Allow Submit Purchase Request"/>
                        <div class="text-muted">
                            Labour is allowed to submit purchase request for the shortage of production materials.
                        </div>
                        <div class="content-group" attrs="{'invisible': [('mrp_allow_submit_pr_pp', '=', False)]}">
                            <div class="o_setting_box p-0">
                                <div class="o_setting_left_pane">
                                    <field name="mrp_allow_submit_pr_partial_pp"/>
                                </div>
            
                                <div class="o_setting_right_pane">
                                    <label for="mrp_allow_submit_pr_partial_pp" string="Submit Partial Request"/>
                                    <div class="text-muted">
                                        Partial request from Production Plan
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>

            <xpath expr="//div[@name='mrp_allow_submit_mr_po_container']" position="before">
                <div class="col-lg-6 col-12 o_setting_box" name="mrp_allow_submit_pr_po_container">
                    <div class="o_setting_left_pane">
                        <field name="mrp_allow_submit_pr_po"/>
                    </div>

                    <div class="o_setting_right_pane">
                        <label for="mrp_allow_submit_pr_po" string="Allow Submit Purchase Request"/>
                        <div class="text-muted">
                            Labour is allowed to submit purchase request for the shortage of production materials.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>