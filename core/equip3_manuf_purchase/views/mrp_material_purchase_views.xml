<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_mrp_material_purchase_tree" model="ir.ui.view">
		<field name="name">view.mrp.material.purchase.tree</field>
		<field name="model">mrp.material.purchase</field>
		<field name="arch" type="xml">
			<tree 
				decoration-info="state == 'draft'"
				string="Material To Purchase"
				default_order="state asc"
				>
				<field name="name" string="Material To Purchase"/>
				<field name="create_date"/>
				<field name="create_uid" widget="many2one_avatar_user"/>
				<field name="company_id" invisible="1"/>
				<field name="activity_ids" widget="list_activity" optional="show" />
				<field 
					name="state" 
					widget="badge"
                    decoration-success="state == 'submitted'"
                    decoration-muted="state == 'draft'"/>
			</tree>
		</field>
	</record>

	<record id="view_mrp_material_purchase_form" model="ir.ui.view">
		<field name="name">view.mrp.material.purchase.form</field>
		<field name="model">mrp.material.purchase</field>
		<field name="arch" type="xml">
			<form string="Material To Purchase">
				<header>
					<button name="action_calculate" type="object" string="Calculate" attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('is_calculated', '=', True)]}" class="oe_highlight"/>
					<button name="action_submit_pr" type="object" string="Submit To Purchase Request" attrs="{'invisible': ['|', ('state', '=', 'submitted'), ('is_calculated', '=', False)]}" class="oe_highlight"/>
					<button name="action_submit_mr" type="object" string="Submit To Material Request" attrs="{'invisible': ['|', ('state', '=', 'submitted'), ('is_calculated', '=', False)]}" class="oe_highlight"/>
					<field name="state" widget="statusbar" statusbar_visible="draft,submitted"/>
				</header>
				<sheet>
					<div name="button_box" class="oe_button_box">
                        <button name="action_view_purchase_request"
                                class="oe_stat_button"
                                icon="o-hm-smart-all-purchased"
                                type="object"
                                attrs="{'invisible': [('purchase_request_count', '=', 0)]}"
                                string="Purchase Request">
                        </button>
						<button name="action_view_material_request"
                                class="oe_stat_button"
                                icon="fa-bars"
                                type="object"
                                attrs="{'invisible': [('material_request_count', '=', 0)]}"
                                string="Material Requests">
                        </button>
                    </div>

					<div class="oe_title">
						<h1>
                            <field name="name" readonly="1"/>
                        </h1>
					</div>
					<group>
						<group>
							<label for="date_from"/>
							<div class="oe_inline">
								<field name="date_from" class="mr8 oe_inline"/>
								<strong class="mr8 oe_inline">To</strong>
								<field name="date_to" class="oe_inline"/>
							</div>
						</group>
							
						<group>
							<field name="company_id" options="{'no_create': True, 'no_create_edit': True}"/>
							<field name="is_branch_required" invisible="1"/>
							<field name="branch_id" attrs="{'required': [('is_branch_required', '=', True)]}" options="{'no_create': True, 'no_create_edit': True}"/>
							<field name="create_date"/>
							<field name="create_uid"/>
                            <field name="is_calculated" invisible="1"/>
                            <field name="purchase_request_count" invisible="1"/>
                            <field name="material_request_count" invisible="1"/>
						</group>
						
					</group>
					<group>
						<field name="mrp_production_ids" string="Production Order" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}"/>
					</group>
					<notebook>
						<page string="Finished Good">
							<field name="finished_product_ids" mode="tree">
								<tree string="Finished Products" editable="bottom">
									<field name="mrp_material_purchase_id" invisible="1"/>
									<field name="company_id" invisible="1"/>
                                    <field name="production_id" optional="hide"/>
									<field name="product_id" options="{'no_create': True, 'no_create_edit': True}"/>
									<field name="product_bom" domain="[('product_tmpl_id.product_variant_ids', '=', product_id)]" options="{'no_create': True, 'no_create_edit': True}"/>
									<field name="product_uom_qty" options="{'no_create': True, 'no_create_edit': True}"/>
                                    <field name="uom_id" options="{'no_create': True, 'no_create_edit': True}"/>
                                    <field name="uom_category_id" invisible="1"/>
                                    <field name="finished_uom_id" optional="hide"/>
                                    <field name="product_uom_id" optional="hide"/>
								</tree>
							</field>
						</page>
						</notebook>
						<notebook>
						<page string="Materials">
							<field name="component_ids" mode="tree">
								<tree string="Materials" editable="bottom" create="false">
									<field name="mrp_material_purchase_id" invisible="1"/>
									<field name="company_id" invisible="1"/>
									<field name="product_id"/>
                                    <field name="location_id"/>
									<field name="qty_available"/>
									<field name="incoming_qty"/>
									<field name="outgoing_qty"/>
									<field name="virtual_available"/>
									<field name="needed"/>
									<field name="to_purchase"/>
                                    <field name="product_uom_id" string="UoM"/>
								</tree>
							</field>
						</page>
					</notebook>
				</sheet>
				<div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
			</form>
		</field>
	</record>

	<record id="view_mrp_material_purchase_kanban" model="ir.ui.view">
        <field name="name">mrp.material.purchase.kanban</field>
        <field name="model">mrp.material.purchase</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="name"/>
                <field name="create_uid"/>
                <field name="create_date"/>
                <field name="company_id"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings mt4 ml-1">
                                    <strong class="o_kanban_record_title"><span>
                                    	<t t-esc="record.name.value"/></span></strong>
                                </div>
                                <span class="float-right text-right">
                                	<t t-esc="record.create_date.value"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left text-muted">
                                    <span><t t-esc="record.company_id.value"/></span>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <span t-attf-class="badge #{['draft'].indexOf(record.state.raw_value) > -1 ? 'badge-primary' : 'badge-success'}"><t t-esc="record.state.value"/></span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

	<record id="view_mrp_material_purchase_search" model="ir.ui.view">
        <field name="name">mrp.material.purchase.list.select</field>
        <field name="model">mrp.material.purchase</field>
        <field name="arch" type="xml">
            <search string="Search Material To Purchase">
                <field name="name" string="Material To Purchase" />
                <separator />
                <!-- <field name="create_uid"/>
                <field name="create_date"/>
                <field name="state" /> -->
                <filter
                    name="state_draft"
                    string="Draft"
                    domain="[('state','=','draft')]"
                />
                <filter
                    name="state_submitted"
                    string="Submitted"
                    domain="[('state','=','submitted')]"
                    help="Submitted to Purchase Request"
                />
                <filter
                    name="my_material_to_purchase"
                    domain="[('create_uid','=', uid)]"
                    help="My Material To Purchase"
                />
                <group expand="0" string="Group By...">
                    <!-- <filter
                        name="create_uid"
                        string="Create By"
                        icon="fa-user"
                        domain="[]"
                        context="{'group_by':'create_uid'}"
                    />
                    <filter
                        name="state"
                        string="Status"
                        icon="fa-user"
                        domain="[]"
                        context="{'group_by':'state'}"
                    /> -->
                </group>

				
                <searchpanel view_types="tree,kanban,pivot,graph">
                    <field name="state"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="view_mrp_material_purchase_calendar" model="ir.ui.view">
    	<field name="name">mrp.material.purchase.calendar</field>
    	<field name="model">mrp.material.purchase</field>
    	<field name="arch" type="xml">       
    		<calendar 
    			date_start="create_date"
    			date_stop="create_date"
    			string="Material To Purchase"
    			event_open_popup="true"
    			mode="month"
    			color="name"
    			quick_add="False"
    		>
    		<field name="name"/>           
    		<field name="state"/>
    		</calendar>   
    	</field>
    </record>

	<record id="action_menu_view_mrp_material_purchase" model="ir.actions.act_window">
        <field name="name">Material to Purchase</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.material.purchase</field>
        <field name="view_mode">tree,form,kanban,calendar,pivot,graph</field>
        <field name="context">{"search_default_create_uid": uid}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
           Create a new Material to Purchase
          </p>
        </field>
    </record>
	
</odoo>
