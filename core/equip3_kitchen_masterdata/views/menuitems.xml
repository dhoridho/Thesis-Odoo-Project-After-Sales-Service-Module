<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="product_template_action" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" eval="False"/> <!-- Force empty -->
        <field name="search_view_id" ref="product.product_template_search_view"/>
        <field name="context">{"search_default_filter_to_sell":1, "show_kitchen_tab": 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new product
            </p><p>
                You must define a product for everything you sell or purchase,
                whether it's a storable product, a consumable or a service.
            </p>
        </field>
    </record>

	<record id="product_normal_action" model="ir.actions.act_window">
		<field name="name">Product Variants</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">product.product</field>
		<field name="view_mode">tree,form,kanban,activity</field>
		<field name="search_view_id" ref="product.product_search_form_view"/>
		<field name="view_id" eval="False"/> <!-- Force empty -->
		<field name="context">{"show_kitchen_tab": 1}</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
			Create a new product variant
			</p><p>
			You must define a product for everything you sell or purchase,
			whether it's a storable product, a consumable or a service.
			</p>
		</field>
	</record>

	<menuitem id="mrp_central_kitchen_master_data"
		name="Master Data"
		groups="equip3_kitchen_accessright_settings.group_central_kitchen_is_a_chef"
		parent="equip3_kitchen_accessright_settings.menu_kitchen_root"
		sequence="100">

		<menuitem id="kitchen_master_data_products"
			name="Products"
			action="product_template_action"/>

		<menuitem id="kitchen_master_data_product_variants"
			name="Product Variants"
			action="product_normal_action"
			groups="product.group_product_variant"/>

		<menuitem id="kitchen_master_data_bill_of_materials"
			name="Bills of Materials"
			action="kitchen_bom_form_action"/>

	</menuitem>

	<record id="mrp_central_kitchen_master_data" model= "ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-parent-central-kitchen-master-data-alternatif</field>
    </record>

</odoo>