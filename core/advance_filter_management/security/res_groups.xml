<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.module.category" id="group_category_advance_filter_management">
            <field name="name">Advance Filter Management</field>
        </record>

        <record id="group_filters_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="group_category_advance_filter_management"/>
        
        </record>
        
        <record id="group_filters_admin" model="res.groups" >
            <field name="name">Manager</field>
            <field name="category_id" ref="group_category_advance_filter_management"/>
            <field name="implied_ids" eval="[(4, ref('advance_filter_management.group_filters_user'))]"/>
        </record>

        <record id="rule_filters_user" model="ir.rule">
            <field name="name">User Filters</field>
            <field name="model_id" ref="advance_filter_management.model_ir_filters"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('advance_filter_management.group_filters_user'))]"/>
        </record>

        <record id="rule_filters_admin_ah" model="ir.rule">
            <field name="name">All Filters</field>
            <field name="model_id" ref="advance_filter_management.model_ir_filters"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('advance_filter_management.group_filters_admin'))]"/>
        </record>
    </data>
</odoo>
    