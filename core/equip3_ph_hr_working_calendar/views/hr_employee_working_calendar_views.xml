<?xml version="1.0" encoding="utf-8"?>
<odoo>

   <record id="ph_hr_employee_working_calendar_view_form" model="ir.ui.view">
        <field name="name">ph_hr_employee_working_calendar.view.form</field>
        <field name="model">hr.employee.working.calendar</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="main_form">
                        <group name="left_form">
                            <field name="employee_id" />
                            <field name="contract_id" />
                            <field name="department_id" />
                            <field name="working_hours" />
                            <field name="day_of_week" />
                            <field name="date_start" />
                            <field name="date_end" />
                            <field name="break_from" widget="float_time" string="Allowed Start Break" />
                            <field name="break_to" widget="float_time" string="Allowed End Break" />
                            <field name="maximum_break" widget="float_time" />
                        </group>

                        <group name="right_form">
                            <field name="checkin" />
                            <field name="checkout" />
                            <field name="hour_from" widget="float_time" />
                            <field name="hour_to"  widget="float_time" />
                            <field name="minimum_hours" widget="float_time" />
                            <field name="tolerance_late" widget="float_time" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
   </record>

   <record id="view_hr_employee_working_calendar_tree" model="ir.ui.view">
        <field name="name">hr.employee.working.calendar.tree</field>
        <field name="model">hr.employee.working.calendar</field>
        <field name="arch" type="xml">
            <tree>
                <field name="employee_id" />
                <field name="day_type" />
                <field name="department_id" />
                <field name="day_of_week" />
                <field name="checkin" />
                <field name="checkout" />
                <field name="break_from" string="Allowed Start Break" />
                <field name="break_to" string="Allowed End Break" />
            </tree>
        </field>
    </record>

   <record id="hr_employee_working_alendar_action" model="ir.actions.act_window">
        <field name="name">Employee Working Calendar</field>
        <field name="res_model">hr.employee.working.calendar</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click "Create" to Create a New Record.
            </p>
        </field>
   </record>

   <menuitem
        id="hr_employee_working_calemdar_menu"
        name="Employee Working Calendar"
        parent="hr_attendance.menu_hr_attendance_manage_attendances"
        action="hr_employee_working_alendar_action"
        sequence="65"/>

</odoo>
