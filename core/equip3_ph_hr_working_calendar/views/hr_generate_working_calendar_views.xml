<?xml version="1.0"?>
<odoo>
    <record id="view_hr_generate_working_calendar_form" model="ir.ui.view">
        <field name="name">hr.generate.working.calendar.form</field>
        <field name="model">hr.generate.working.calendar</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,generated"/>
                    <button name="action_generate" string="Generate"
                            attrs="{'invisible':[('state','=','generated')]}" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                         <label for="start_date" string="Time Period"/>
                        <div>
                            <field name="start_date" class="oe_inline" required="1"/>
                            -
                            <field name="end_date" class="oe_inline" required="1"/>
                        </div>
                    </group>
                    <div>
                        <group string="Employee">
                            <field name="employee_ids" widget="one2many_list">
                                <tree string="Employee">
                                    <field name="name"/>
                                    <field name="department_id"/>
                                    <field name="job_id"/>
                                    <field name="resource_calendar_id" string="Working Schedule"/>
                                </tree>
                            </field>
                        </group>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hr_generate_working_calendar_tree" model="ir.ui.view">
        <field name="name">hr.generate.working.calendar.tree</field>
        <field name="model">hr.generate.working.calendar</field>
        <field name="arch" type="xml">
            <tree>
                <!--<field name="employee_ids" widget="many2many_tags" />-->
                <field name="start_date" />
                <field name="end_date" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="hr_generate_working_calendar_action" model="ir.actions.act_window">
        <field name="name">Generate Working Calendar</field>
        <field name="res_model">hr.generate.working.calendar</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="view_id" eval="False"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click "Create" to add a new Generate Working Calendar.
            </p>
        </field>
    </record>

    <menuitem
        id="hr_generate_working_calendar_menu"
        parent="hr_attendance.menu_hr_attendance_manage_attendances"
        action="hr_generate_working_calendar_action"
        sequence="70"/>
</odoo>