<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_model_fields_form" model="ir.ui.view">
        <field name="name">view.model.fields.form</field>
        <field name="model">ir.model.fields</field>
        <field name="inherit_id" ref="base.view_model_fields_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='help']" position="after">
                <field name="groups_str"/>
            </xpath>

            <xpath expr="//field[@name='groups']" position="inside">
                <tree string="Access Rights">
                    <field name="external_or_id" string="External ID/ID"/>
                    <field name="name"/>
                </tree>
            </xpath>
        </field>
    </record>

</odoo>