<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="equip3_hr_payroll_general_inherit_hr_salary_rule_form" model="ir.ui.view">
            <field name="name">hr.salary.rule.view.form.inherit</field>
            <field name="model">hr.salary.rule</field>
            <field name="inherit_id" ref="hr_payroll_community.hr_salary_rule_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="tax" string="Tax">
                        <group name="main_tax">
                            <group name="tax_configuration" string="Tax Configuration">
                                <field name="salary_rule_tax_category"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
