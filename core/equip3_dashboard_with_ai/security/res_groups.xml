<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="0">
    <record model="ir.module.category" id="izi_dashboard.module_category_izi_dashboard">
      <field name="name">AI Dashboard</field>
      <field name="description">Helps you handle your dashboard.</field>
      <field name="sequence">200</field>
    </record>

    <record id="izi_dashboard.group_user_dashboard" model="res.groups">
      <field name="name">User: Own Dashboard Only</field>
      <field name="category_id" ref="izi_dashboard.module_category_izi_dashboard"/>
      <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
      <field name="comment">the user will have access to his own dashboard in the AI Dashboard application.</field>
    </record>

    <record id="izi_dashboard.group_manager_dashboard" model="res.groups">
      <field name="name">Manager: All Dashboard</field>
      <field name="category_id" ref="izi_dashboard.module_category_izi_dashboard"/>
      <field name="implied_ids" eval="[(4, ref('izi_dashboard.group_user_dashboard'))]"/>
      <field name="comment">the user will have access to all dashboard of everyone in the AI Dashboard application.</field>
      <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="base.default_user" model="res.users">
      <field name="groups_id" eval="[(4,ref('izi_dashboard.group_manager_dashboard'))]"/>
    </record>


    <record model="ir.module.category" id="izi_data.module_category_izi_analysis">
      <field name="name">AI Data Analysis</field>
      <field name="description">Helps you handle your analysis.</field>
      <field name="sequence">210</field>
    </record>

    <record id="izi_data.group_user_analysis" model="res.groups">
      <field name="name">User: Own Data Analysis Only</field>
      <field name="category_id" ref="izi_data.module_category_izi_analysis"/>
      <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
      <field name="comment">the user will have access to his own dashboard in the Analysis Dashboard application.</field>
    </record>

    <record id="izi_data.group_manager_analysis" model="res.groups">
      <field name="name">Manager: All Data Analysis Dashboard</field>
      <field name="category_id" ref="izi_data.module_category_izi_analysis"/>
      <field name="implied_ids" eval="[(4, ref('izi_data.group_user_analysis'))]"/>
      <field name="comment">the user will have access to all analysis dashboard of everyone in the IZI Analysis Dashboard application.</field>
      <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="base.default_user" model="res.users">
      <field name="groups_id" eval="[(4,ref('izi_data.group_manager_analysis'))]"/>
    </record>


  </data>
</odoo>