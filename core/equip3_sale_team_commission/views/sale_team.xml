<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <!-- crm.team inherit form view -->
  <record id="equip3_sale_team_commision_sale_stock_simple_form_inherit" model="ir.ui.view">
    <field name="name">equip3.sale.team.commision.sale.stock.simple.form.inherit</field>
    <field name="model">res.users</field>
    <field name="inherit_id" ref="sale_stock.res_users_view_simple_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='name']" position="attributes">
        <attribute name="readonly">1</attribute>
			</xpath>
      <xpath expr="//field[@name='login']" position="attributes">
        <attribute name="readonly">1</attribute>
			</xpath>
      <xpath expr="//field[@name='company_id']" position="attributes">
        <attribute name="readonly">1</attribute>
			</xpath>
      <xpath expr="//field[@name='phone']" position="attributes">
        <attribute name="readonly">1</attribute>
			</xpath>
      <xpath expr="//field[@name='mobile']" position="attributes">
        <attribute name="readonly">1</attribute>
			</xpath>
      <xpath expr="//field[@name='property_warehouse_id']" position="attributes">
        <attribute name="readonly">1</attribute>
			</xpath>
    </field>
  </record>

  <!-- crm.team inherit form view -->
  <record id="equip3_sale_team_commission_crm_team_view_form_inherit" model="ir.ui.view">
    <field name="name">equip3.sale.team.commission.crm.team.view.form.inherit</field>
    <field name="model">crm.team</field>
    <field name="inherit_id" ref="equip3_sale_masterdata.inherit_crm_team_view_form"/>
    <field name="arch" type="xml">
      <field name="member_ids" position="attributes">
          <attribute name="domain"></attribute>
      </field>
    </field>
  </record>
</odoo>