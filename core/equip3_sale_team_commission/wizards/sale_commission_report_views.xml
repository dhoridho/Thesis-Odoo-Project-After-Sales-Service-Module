<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_form_sale_commission_report" model="ir.ui.view">
        <field name="name">sale.commission.report.form</field>
        <field name="model">sale.commission.report</field> 
        <field name="arch" type="xml">
            <form string="Sale Commission Report">
                <group>
                    <group>
                        <field name="start_date" required="1"/>
                        <field name="sales_persons" widget="many2many_tags" options="{'no_create': True}"/>
<!--                        <field name="commision_type" widget="radio"/>-->
                    </group>
                    <group>
                        <field name="end_date" required="1"/>
                        <field name="company_ids" invisible="1" widget="many2many_tags"/>
                    </group>
                </group>
                <footer>
                    <button name="action_print" string="Print" type="object" class="oe_highlight" />
                    <button name="action_print_xls" string="Print In XLS" type="object" class="oe_highlight" />
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="sale_commission_report_action" model="ir.actions.act_window">
        <field name="name">Sale Commission Report</field>
        <field name="res_model">sale.commission.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
