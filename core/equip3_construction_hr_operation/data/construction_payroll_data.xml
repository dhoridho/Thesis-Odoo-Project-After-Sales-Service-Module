<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <data noupdate="1">
            <record id="hr_rule_cons_basic" model="hr.salary.rule">
                <field name="name">Construction Basic Salary</field>
                <field name="sequence" eval="1"/>
                <field name="code">CONS_BASIC</field>
                <field name="category_id" ref="hr_payroll_community.BASIC"/>
                <field name="appears_on_payslip">True</field>
                <field name="payslip_type" eval="[(4, ref('equip3_hr_payroll_extend_id.employee_payslip'))]"/>
            <!--            <field name="tax_calculation_method">gross</field>-->
                <field name="category_on_payslip">income</field>
            <!--            <field name="tax_category">deduction</field>-->
            <!--            <field name="bpjs_ketenagakerjaan_report">iuran_jp_pekerja</field>-->
                <field name="condition_select">none</field>
                <field name="amount_select">code</field>
                <field name="amount_python_compute">result = payslip.env['hr.payslip'].get_construction_basic_salary(payslip, payslip.date_from, payslip.date_to)
                </field>
            </record>

            <record id="hr_rule_cons_att_basic" model="hr.salary.rule">
                <field name="name">Construction Attendance Basic Salary</field>
                <field name="sequence" eval="1"/>
                <field name="code">CONS_ATT_BASIC</field>
                <field name="category_id" ref="hr_payroll_community.BASIC"/>
                <field name="appears_on_payslip">True</field>
                <field name="payslip_type" eval="[(4, ref('equip3_hr_payroll_extend_id.employee_payslip'))]"/>
                <field name="category_on_payslip">income</field>
                <field name="condition_select">none</field>
                <field name="amount_select">code</field>
                <field name="amount_python_compute">result = payslip.env['hr.payslip'].get_construction_attendance_basic_salary(payslip, payslip.date_from, payslip.date_to)
                </field>
            </record>

            <record id="equip_structure_construction" model="hr.payroll.structure">
                <field name="code">CONS_STR</field>
                <field name="name">Base Construction Structure</field>
                <field name="parent_id" eval=""/>
                <field eval="[(4, ref('equip3_construction_hr_operation.hr_rule_cons_basic'))]" name="rule_ids"/>
                <field name="company_id" ref="base.main_company"/>
            </record>

            <record id="equip_structure_construction_attendance" model="hr.payroll.structure">
                <field name="code">CONS_ATT_STR</field>
                <field name="name">Base Construction Attendance Structure</field>
                <field name="parent_id" eval=""/>
                <field eval="[(4, ref('equip3_construction_hr_operation.hr_rule_cons_att_basic'))]" name="rule_ids"/>
                <field name="company_id" ref="base.main_company"/>
            </record>
        </data>

</odoo>