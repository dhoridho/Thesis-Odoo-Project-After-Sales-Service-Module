<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="equip3_construction_hr_operation.construction_hr_attendance_view_form_base_equip_inherit" model="ir.ui.view">
        <field name="name">construction.hr.attendance.form.base.inherit</field>
        <field name="model">hr.attendance</field>
        <field name="priority" eval="80"/>
        <field name="inherit_id" ref="equip3_hr_attendance_extend.hr_attendance_view_form_base_equip_inherit"/>
        <field name="arch" type="xml">
          <xpath expr="//sheet" position="inside">
              <group name="attendance_project_information" string="Project Information">
                  <group>
                      <field name="project_id" readonly="1" force_save="1"/>
                      <field name="project_task_id" readonly="1" force_save="1"/>
                      <field name="group_of_product_id" readonly="1" force_save="1"/>
                      <field name="product_id" readonly="1" force_save="1"/>
                  </group>
                  <group>
                      <field name="rate_periodic" readonly="1" force_save="1"/>
                      <field name="hourly_rate" invisible="1" force_save="1"/>
                      <field name="rate" readonly="1" force_save="1"/>
                      <field name="late_deduction_amount" force_save="1"/>
                      <field name="rate_amount" readonly="1" force_save="1"/>

                  </group>
              </group>
          </xpath>
        </field>
    </record>

    <record id="view_attendance_tree_construction_inherit" model="ir.ui.view">
            <field name="name">hr.attendance.tree.construction.inherit</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="equip3_hr_attendance_extend.view_attendance_tree_equip_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='department_id']" position="after">
                    <field name="active_location_id" widget="many2many_tags"/>
                </xpath>
                <xpath expr="//field[@name='worked_hours']" position="after">
                    <field name="rate"/>
                    <field name="rate_amount"/>
                </xpath>
            </field>
        </record>
</odoo>