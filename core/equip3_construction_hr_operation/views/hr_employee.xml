<odoo>
    <record id="construction_hr_employee_view_form" model="ir.ui.view">
        <field name="name">construction.hr.employee.view.form.inherit.resume</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_skills.hr_employee_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='public']" position="before">
                <page name="project_information" string="Project Information">
                    <field name="project_information_ids" readonly="1">
                        <tree string="Project Information" editable="bottom">
                            <field name="name" invisible="1"/>
                            <field name="employee_id" invisible="1"/>
                            <field name="project_scope_domain_dump" invisible="1"/>
                            <field name="section_domain_dump" invisible="1"/>
                            <field name="group_of_product_domain_dump" invisible="1"/>
                            <field name="product_domain_dump" invisible="1"/>
                            <field name="active_location_domain_dump" invisible="1"/>
                            <field name="project_id" required="1"/>
                            <field name="project_task_id" attrs="{'readonly': [('project_id', '=', False)]}" required="1"/>
                            <field name="active_location_id" attrs="{'readonly': [('project_task_id', '=', False)]}" domain="active_location_domain_dump" required="1"/>
                            <field name="project_scope_id" attrs="{'readonly': [('project_task_id', '=', False)]}" domain="project_scope_domain_dump" required="1"/>
                            <field name="section_id" attrs="{'readonly': [('project_scope_id', '=', False)]}" domain="section_domain_dump" required="1"/>
                            <field name="group_of_product_id" attrs="{'readonly': [('section_id', '=', False)]}" domain="group_of_product_domain_dump" required="1"/>
                            <field name="product_id" attrs="{'readonly': [('group_of_product_id', '=', False)]}" domain="product_domain_dump" required="1"/>
<!--                            <field name="uom_id"/>-->
                            <field name="rate_periodic"/>
                            <field name="rate_amount"/>
                            <field name="labour_cost_rate_id" invisible="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
