<?xml version="1.0"?>
<odoo>
    <data>
        <record id="construction_product_template_form_view_inherit_const" model="ir.ui.view">
            <field name="name">construction.product.template.form.view.inherit.const</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="equip3_construction_masterdata.construction_product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_information']/group/group[@name='group_general']/field[@name='group_of_product']" position="before">
                    <field name="job_position" attrs="{'invisible':[('type','!=','labour')], 'required':[('type','=','labour')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>