<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="progress_history_form_view_wiz_inherit" model="ir.ui.view">
        <field name="name">progress_history_form_view_wiz_inherit</field>
        <field name="model">progress.history.wiz</field>
        <field name="inherit_id" ref="equip3_construction_operation.progress_history_form_view_wiz"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='custom_project_progress']" position="after">
                <field name="current_total_duration" readonly="1" widget="float_time_hms" attrs="{'invisible':[('custom_project_progress','!=','timesheet')]}" force_save="1"/>
                <field name="worker_ids" widget="many2many_tags" attrs="{'invisible':['|', ('custom_project_progress','!=','timesheet'), ('is_using_labour_attendance','=',True)], 'required':[('custom_project_progress','=','timesheet')]}"/>
            </xpath>
        </field>
    </record>

</odoo>