<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_const_view_form_labour" model="ir.ui.view">
            <field name="name">sale.order.const.view.form.labour</field>
            <field name="model">sale.order.const</field>
            <field name="inherit_id" ref="equip3_construction_sales_operation.sale_order_const_view_form"/>
            <field name="arch" type="xml">
                
                <xpath expr="//notebook/page/field[@name='labour_line_ids']/tree/field[@name='project_scope']"
                       position="attributes">
                    <attribute name="optional">hide</attribute>
                </xpath>
                <xpath expr="//notebook/page/field[@name='labour_line_ids']/tree/field[@name='section_name']"
                       position="attributes">
                    <attribute name="optional">hide</attribute>
                </xpath>
                <xpath expr="//notebook/page/field[@name='labour_line_ids']/tree/field[@name='labour_id']"
                       position="attributes">
                    <attribute name="optional">hide</attribute>
                    <attribute name="string">Job Position</attribute>
                </xpath>

            </field>
        </record>

    </data>
</odoo> 