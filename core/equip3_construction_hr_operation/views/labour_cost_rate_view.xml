<odoo>
    <data>
        <!-- labour.cost.rate list view -->
        <record id="labour_cost_rate_tree_view" model="ir.ui.view">
            <field name="name">labour.cost.rate.tree</field>
            <field name="model">labour.cost.rate</field>
            <field name="arch" type="xml">
                <tree string="Labour Cost Rate">
                    <field name="labour_cost_key" invisible="1"/>
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="active_location_id"/>
                    <field name="group_of_product_id"/>
                    <field name="product_id"/>
                    <field name="rate_periodic"/>
                    <field name="rate_amount"/>
                </tree>
            </field>
        </record>

        <!-- labour.cost.rate form view -->
        <record id="labour_cost_rate_form_view" model="ir.ui.view">
            <field name="name">labour.cost.rate.form</field>
            <field name="model">labour.cost.rate</field>
            <field name="arch" type="xml">
                <form string="Labour Cost Rate">
                    <header>
                        <button name="button_confirm" string="Confirm" type="object" class="oe_highlight" states="draft"/>
                        <button name="button_synchronize_rate" string="Synchronize Rate to Employees" type="object" class="oe_highlight" states="confirmed"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                    </header>
                    <sheet>
                        <group name="labour_cost_rate_group">
                            <field name="active_location_domain_dump" invisible="1"/>
                            <field name="group_of_product_domain_dump" invisible="1"/>
                            <field name="uom_id_domain_dump" invisible="1"/>
                            <field name="product_domain_dump" invisible="1"/>
                            <field name="labour_cost_key" readonly="1" force_save="1" invisible="1"/>

                            <group name="labour_cost_rate_left">
                                <field name="name" required="1"/>
                                <field name="project_id" required="1"/>
                                <field name="active_location_id" domain="active_location_domain_dump" required="1" attrs="{'readonly': [('project_id', '=', False)]}"/>
                                <field name="uom_id" invisible="1"/>
                                <field name="rate_periodic" required="1"/>
                            </group>
                            <group name="labour_cost_rate_right">
                                <field name="group_of_product_id" required="1" domain="group_of_product_domain_dump" attrs="{'readonly': [('project_id', '=', False)]}"/>
                                <field name="product_id" required="1" domain="product_domain_dump" attrs="{'readonly': [('group_of_product_id', '=', False)]}"/>
                                <field name="rate_amount"/>
                                <field name="hourly_rate"/>
                            </group>

                        </group>
                    </sheet>
                    <div class="oe_chatter" name="chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_labour_cost_rate" model="ir.actions.act_window">
           <field name="name">Labour Cost Rate</field>
           <field name="type">ir.actions.act_window</field>
           <field name="res_model">labour.cost.rate</field>
           <field name="view_mode">tree,form</field>
           <field name="view_id" ref="labour_cost_rate_tree_view"/>
           <field name="help" type="html">
               <p class="oe_view_nocontent_create">
                   Define labour cost rate for your projects and active locations.
               </p>
           </field>
        </record>

        <menuitem
            action="action_labour_cost_rate"
            id="labour_cost_rate"
            name="Labour Cost Rate"
            parent="hr_attendance.menu_hr_attendance_settings"
            sequence="0"/>

    </data>
</odoo>
