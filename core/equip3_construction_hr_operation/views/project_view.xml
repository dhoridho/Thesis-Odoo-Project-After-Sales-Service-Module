<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="project_form_inherited_invisible_inherit" model="ir.ui.view">
        <field name="name">equip3.construction.operation.inherit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="equip3_construction_operation.project_form_inherited_invisible"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='working_hour']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="project_form_edit_fields_costing_inherit" model="ir.ui.view">
        <field name="name">equip3.construction.operation.edit.fields.costing.inherit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="equip3_construction_operation.edit_fields_costing"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='project_location_ids']" position="after">
                <field name="labour_cost_rate_ids" readonly="1">
                    <tree>
                        <field name="name"/>
                        <field name="project_id" invisible="1"/>
                        <field name="active_location_id"/>
                        <field name="group_of_product_id"/>
                        <field name="product_id"/>
                        <field name="uom_id" invisible="1"/>
                        <field name="rate_periodic"/>
                        <field name="rate_amount"/>
                    </tree>
                </field>
            </xpath>
        </field>
    </record>

    <record id="project_invoice_form_form_construction_inherit" model="ir.ui.view">
        <field name="name">project.invoice.form.form.construction.inherit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="hr_timesheet.project_invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='custom_project_progress']" position='attributes'>
                <attribute name="invisible">0</attribute>
            </xpath>
            
            <xpath expr="//div[@id='timesheet_settings']" position="attributes">
                <attribute name="attrs">{'invisible' : [('custom_project_progress', '!=', 'timesheet')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='allow_timesheets']" position="attributes">
                <attribute name="readonly">1</attribute>
                <attribute name="force_save">1</attribute>
            </xpath>

        </field>
    </record>

</odoo>