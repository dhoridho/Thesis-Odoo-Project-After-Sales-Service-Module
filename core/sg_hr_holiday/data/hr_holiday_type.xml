<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Compensatory Days -->
    <record model="hr.leave.type" id="hr_holidays.holiday_status_comp">
        <field name="name">CD</field>
        <field name="name2">Compensatory Days</field>
        <field name="default_leave_allocation">5</field>
        <field name="code">CD</field>
    </record>

    <!-- Casual leave -->
    <record model="hr.leave.type" id="hr_holidays.holiday_status_cl">
        <field name="name" eval="'Legal Leaves '+time.strftime('%Y')" />
        <field name="default_leave_allocation">12</field>
        <field name="code">LL</field>
    </record>

    <!-- Sick leave -->
    <record model="hr.leave.type" id="hr_holidays.holiday_status_sl">
        <field name="name">SL</field>
        <field name="name2">Sick Leaves</field>
        <field name="code">SL</field>
    </record>

    <!--Unpaid Leave -->
    <record model="hr.leave.type" id="hr_holidays.holiday_status_unpaid">
        <field name="name">UP</field>
        <field name="name2">Unpaid</field>
        <field name="code">UP</field>
    </record>

    <!-- Unpaid Child Care Leave -->
    <record model="hr.leave.type" id="holiday_status_unpaid_cc">
        <field name="name">UCCL</field>
        <field name="name2">Unpaid Child Care Leave</field>
        <field name="code">UCCL</field>
        <field name="color_name">lightcyan</field>
    </record>

</odoo>
