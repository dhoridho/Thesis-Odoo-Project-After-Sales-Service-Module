<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_config_settings_view_form_implementor" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.implementor</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="equip3_manuf_accessright_settings.res_config_settings_view_form_implementor"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='implementor_mrp_right']" position="inside">
                <div class="oe_inline">
                    <div class="o_setting_left_pane">
                        <field name="dedicated_material_consumption"/>
                    </div>
                    <div class="o_setting_right_pane" style="padding-bottom: 15px;">
                        <label for="dedicated_material_consumption" string="Dedicated Material Consumption"/>
                        <div class="text-muted">
                            Only allow consumption of material Dedicated to the order
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="res_config_settings_view_form_consumption" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.consumption</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="equip3_manuf_accessright_settings.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='mrp_lock']" position="attributes">
                <attribute name="title">Makes production record locked. This only applies to new production records, not previously created ones.</attribute>
            </xpath>

            <xpath expr="//div[@id='mrp_lock']/div[hasclass('o_setting_right_pane')]/div[hasclass('text-muted')]" position="replace">
                <div class="text-muted">Disable user from changing consumed quantity.</div>
            </xpath>
        </field>
    </record>

</odoo>