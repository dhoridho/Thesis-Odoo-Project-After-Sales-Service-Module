<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_workorder_tree_editable_view_inherit_contd" model="ir.ui.view">
        <field name="name">mrp.workorder.tree.editable.view.inherit.contd</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="equip3_manuf_operations.mrp_workorder_tree_editable_view_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_finish']" position="attributes">
                <attribute name="attrs">{'invisible': [(1, '=', 1)]}</attribute>
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='button_finish']" position="after">
                <button name="button_finish_wizard" type="object" string="Done" class="btn-success"
                  attrs="{'invisible': ['|', '|', ('production_state', 'in', ('draft', 'done', 'approval', 'approved', 'reject')), ('working_state', '=', 'blocked'), ('is_user_working', '=', False)]}" style="padding: 5px;"/>
            </xpath>
            <xpath expr="//field[@name='duration']" position="after">
                <field name="should_hide_duration" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='duration']" position="attributes">
                <attribute name="attrs">{'invisible': [('should_hide_duration', '=', True)], 'readonly': [(1, '=', 1)]}</attribute>
            </xpath>
        </field>
    </record>

    <record id="mrp_production_workorder_form_view_inherit_contd" model="ir.ui.view">
        <field name="name">mrp.production.workorder.form.view.inherit.contd</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="equip3_manuf_operations.equip3_mrp_production_workorder_form_view_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='time_tracking']" position="after">
                <page name="production_record" string="Production Records" attrs="{'invisible': [('consumption_ids', '=', [])]}">
                    <field name="consumption_ids" context="{'tree_view_ref': 'equip3_manuf_operations_contd.view_manuf_consumption_tree'}"/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>