<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_plan_form_view_inherit" model="ir.ui.view">
        <field name="name">mrp.plan.form.view.inherit</field>
        <field name="model">mrp.plan</field>
        <field name="inherit_id" ref="equip3_manuf_operations.mrp_plan_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='move_byproduct_ids']" position="after">
                <page name="consumption_ids" string="Production Records" attrs="{'invisible': [('consumption_ids', '=', [])]}">
                    <field name="consumption_ids" context="{'tree_view_ref': 'equip3_manuf_operations_contd.view_manuf_consumption_tree'}"/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>