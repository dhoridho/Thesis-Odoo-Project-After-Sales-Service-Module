<?xml version="1.0" encoding="UTF-8"?> 
<odoo>

    <record id="mrp_bom_form_view" model="ir.ui.view">
        <field name="name">mrp_bom_form_view</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="equip3_manuf_masterdata.mrp_bom_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='consumption']" position="after">
                <field name="is_locked" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='consumption']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('type','!=','normal'), ('is_locked', '=', True)]}</attribute>
            </xpath>

        </field>
    </record>

</odoo>