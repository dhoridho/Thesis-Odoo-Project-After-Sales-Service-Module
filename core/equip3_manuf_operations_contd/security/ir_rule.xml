<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- mrp.consumption -->
        <record id="mrp_consumption_multi_company_rule" model="ir.rule">
            <field name="name">Production Production Record Multi-Company</field>
            <field name="model_id" ref="model_mrp_consumption"/>
            <field name="domain_force">[
                '|', 
                    ('company_id', '=', False), 
                    ('company_id', 'in', company_ids)
            ]</field>
        </record>

        <record id="mrp_consumption_multi_branch_rule" model="ir.rule">
            <field name="name">Production Production Record Multi-Branch</field>
            <field name="model_id" ref="model_mrp_consumption"/>
            <field name="domain_force">[
                '|', 
                    ('branch_id', '=', False), 
                    ('branch_id', 'in', branch_ids)
            ]</field>
        </record>

    </data>
</odoo>