<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_mrp_flexible_consumption_warning_form" model="ir.ui.view">
        <field name="name">view.mrp.flexible.consumption.warning.form</field>
        <field name="model">mrp.flexible.consumption.warning</field>
        <field name="arch" type="xml">
            <form string="Consumption Warning">
                <field name="consumption_id" invisible="1" force_save="1"/>
                <div class="m-2">
                    You consumed/produced a different quantity than expected for the following products.
                    <b>Please confirm it has been done on purpose.</b>
                </div>
                <notebook>
                    <page string="Materials" attrs="{'invisible': [('material_ids', '=', [])]}">
                        <field name="material_ids" force_save="1">
                            <tree string="Materials">
                                <field name="product_id"/>
                                <field name="product_uom"/>
                                <field name="expected_qty" string="To Consume"/>
                                <field name="actual_qty" string="Consumed"/>
                            </tree>
                        </field>
                    </page>
                    <page string="By-Product" attrs="{'invisible': [('byproduct_ids', '=', [])]}">
                        <field name="byproduct_ids" force_save="1">
                            <tree string="By-Products">
                                <field name="product_id"/>
                                <field name="product_uom"/>
                                <field name="expected_qty" string="To Produce"/>
                                <field name="actual_qty" string="Produced"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>