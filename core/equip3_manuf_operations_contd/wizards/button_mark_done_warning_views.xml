        <field name="name">button.mark.done.warning.form</field>
        <field name="model">button.mark.done.warning</field>
        <field name="arch" type="xml">
            <form string="Warning">
                <field name="production_id" invisible="1"/>
                <field name="message" readonly="1"/>
