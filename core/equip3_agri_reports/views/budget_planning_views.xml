<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_budget_planning_tree" model="ir.ui.view">
        <field name="name">view.budget.planning.tree</field>
        <field name="model">agriculture.budget.planning</field>
        <field name="inherit_id" ref="equip3_agri_operations.view_budget_planning_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='priority']" position="before">
                <header>
                    <button name="action_print_pdf" type="object" string="Print PDF" class="oe_highlight"/>
                    <button name="action_print_xlsx" type="object" string="Export XLSX" class="oe_highlight"/>
                </header>
            </xpath>
        </field>
    </record>

    <record id="view_budget_planning_from" model="ir.ui.view">
        <field name="name">view.budget.planning.form</field>
        <field name="model">agriculture.budget.planning</field>
        <field name="inherit_id" ref="equip3_agri_operations.view_budget_planning_from"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="action_print_pdf" type="object" string="Print PDF" class="oe_highlight"/>
                    <button name="action_print_xlsx" type="object" string="Export XLSX" class="oe_highlight"/>
                </header>
            </xpath>
        </field>
    </record>

</odoo>