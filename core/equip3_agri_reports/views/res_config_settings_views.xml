<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.agriculture</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="equip3_agri_operations.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='approval_matrix_agriculture_container']" position="after">
                
                <h2>Nursery</h2>
                <div class="row mt16 o_settings_container" name="nursery_agriculture_container">
                    <div class="col-12 o_setting_box">
                        <div class="o_setting_left_pane"></div>
                        <div class="o_setting_right_pane">
                            <label for="agri_yield_maximum_target" string="Maximum Target (%)"/>
                            <field name="agri_yield_maximum_target"/>
                        </div>
                    </div>
                    <div class="col-12 o_setting_box">
                        <div class="o_setting_left_pane"></div>
                        <div class="o_setting_right_pane">
                            <label for="agri_yield_minimum_target" string="Minimum Target (%)"/>
                            <field name="agri_yield_minimum_target"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
