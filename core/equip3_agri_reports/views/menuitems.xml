<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="agriculture_flow_wizard_action_client" model="ir.actions.client">
        <field name="name">Agriculture Flow</field>
        <field name="tag">agriculture_flow_tag</field>
    </record>

    <menuitem id="agriculture_gis_view_menu"
			  name="GIS View"
			  action="agriculture_gis_view_action"
			  parent="equip3_agri_accessright_settings.menu_agriculture_root"
			  sequence="4"/>

	<menuitem id="agriculture_activity_overview"
			  name="Activity Overview" 
			  action="agriculture_daily_activity_overview_action"
			  parent="equip3_agri_accessright_settings.menu_agriculture_root"
			  sequence="5"/>

    <menuitem id="agri_flow_wizard_menu"
              name="Agriculture Flow"
              action="agriculture_flow_wizard_action_client"
              parent="equip3_agri_accessright_settings.menu_agriculture_root"
              sequence="6"/>

    <menuitem id="agriculture_reporting_menu"
			  name="Reporting"
			  parent="equip3_agri_accessright_settings.menu_agriculture_root"
			  sequence="70">

		<menuitem id="agriculture_reporting_menu_finished_good"
				  name="Finished Goods Report"
				  action="action_agriculture_finished_good_report"
				  sequence="10"/>
		
		<menuitem id="agriculture_reporting_menu_material_usage"
				  name="Material Usage Report"
				  action="action_agriculture_material_usage_report"
				  sequence="20"/>
		
		<menuitem id="agriculture_reporting_menu_harvesting1"
				  name="Harvesting Analysis Report"
				  action="action_agriculture_harvesting_analysis_report"
				  sequence="30"/>

		<menuitem id="agriculture_reporting_menu_harvesting_monthly"
				  name="Harvesting Monthly Report"
				  action="action_agriculture_harvesting_monthly_report"
				  sequence="40"/>

		<menuitem id="agriculture_reporting_menu_budget"
				  name="Budget Analysis Report"
				  action="action_agriculture_budget_analysis_report"
				  sequence="50"/>

		<menuitem id="agriculture_reporting_menu_nursery"
				  name="Nursery Report"
				  action="action_agriculture_nursery_report"
				  sequence="60"/>

		<menuitem id="agriculture_reporting_menu_nursery_yield"
				  name="Nursery Yield Report"
				  action="action_nursery_yield_report"
				  sequence="70"/>
		
		<menuitem id="agriculture_reporting_menu_harvesting"
				  name="Harvesting Report"
				  action="action_agriculture_harvesting_report"
				  sequence="80"/>

		<menuitem id="agriculture_reporting_menu_immature"
				  name="Immature Cost Report"
				  action="action_agriculture_immature_cost_report"
				  sequence="90"/>

		<menuitem id="agriculture_reporting_menu_mature"
				  name="Mature Cost Report"
				  action="action_agriculture_mature_cost_report"
				  sequence="100"/>
	</menuitem>

    <!-- Menu Icons -->
    <function model="ir.ui.menu" name="write">
        <value model="ir.ui.menu" eval="obj().search([
            ('name', 'ilike', 'dashboard'),
            ('parent_id', '=', ref('equip3_agri_accessright_settings.menu_agriculture_root'))
        ]).ids"/>
        <value eval="{'equip_icon_class': 'o-hm-sidebar-main-agriculture-dashboard-1'}"/>
    </function>

    <record id="equip3_agri_reports.agriculture_gis_view_menu" model= "ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-main-agriculture-dashboard</field>
    </record>

    <record id="equip3_agri_reports.agriculture_activity_overview" model= "ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-main-agriculture-activity-overview</field>
    </record>

    <record id="equip3_agri_reports.agri_flow_wizard_menu" model= "ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-main-flow</field>
    </record>

    <record id="equip3_agri_reports.agriculture_reporting_menu" model= "ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-parent-agriculture-reporting</field>
    </record>

</odoo>