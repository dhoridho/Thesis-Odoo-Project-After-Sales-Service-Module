<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="agriculture_gis_view_form" model="ir.ui.view">
        <field name="name">view.agriculture.gis.view.form</field>
        <field name="model">ir.ui.view</field>
        <field name="arch" type="xml">
            <form string="GIS View">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            GIS View
                        </h1>
                    </div>
                    <iframe id="gis_view_iframe" src="https://qgiscloud.com/producthashmicro/test/"
                            style="width: 100%; height: 700px; border: none; border-radius: 23px;"></iframe>
                    <template>
                        <script type="text/javascript">$('.o_control_panel').hide();</script>
                    </template>
                </sheet>
            </form>
        </field>
    </record>

    <record id="agriculture_gis_view_action" model="ir.actions.act_window">
        <field name="name">GIS View</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="agriculture_gis_view_form"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create a GIS View
            </p>
        </field>
    </record>


</odoo>