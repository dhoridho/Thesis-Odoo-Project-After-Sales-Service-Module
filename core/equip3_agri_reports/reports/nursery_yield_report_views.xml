<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_nursery_yield_report_tree" model="ir.ui.view">
        <field name="name">view.nursery.yield.report.tree</field>
        <field name="model">nursery.yield.report</field>
        <field name="arch" type="xml">
            <tree string="Nursery Yield Report" create="0" delete="0" expand="1">
                <field name="activity_record_id"/>
                <field name="block_id" invisible="1"/>
                <field name="product_id" invisible="1"/>
                <field name="lot_id" invisible="1"/>
                <field name="initial_qty"/>
                <field name="counted_qty"/>
                <field name="uom_id"/>
                <field name="gemination_rate"/>
            </tree>
        </field>
    </record>

    <record id="view_nursery_yield_report_search" model="ir.ui.view">
        <field name="name">view.nursery.yield.report.search</field>
        <field name="model">nursery.yield.report</field>
        <field name="arch" type="xml">
            <search string="Nursery Yield Report">
                <field name="activity_record_id"/>
                <field name="block_id"/>
                <field name="product_id"/>
                <field name="lot_id"/>

                <group expand="0" string="Group By...">
                    <filter name="groupby_block_id" string="Nursery Area" domain="[]" context="{'group_by': 'block_id'}"/>
                    <filter name="groupby_product_id" string="Crop" domain="[]" context="{'group_by': 'product_id'}"/>
                    <filter name="groupby_lot_id" string="Lot/Serial Number" domain="[]" context="{'group_by': 'lot_id'}"/>
                </group>

                <searchpanel>
                    <field name="activity_record_id"/>
                    <field name="block_id"/>
                    <field name="product_id"/>
                    <field name="lot_id"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="action_nursery_yield_report" model="ir.actions.act_window">
        <field name="name">Nursery Yield Report</field>
        <field name="res_model">nursery.yield.report</field>
        <field name="view_mode">tree</field>
        <field name="search_view_id" ref="view_nursery_yield_report_search"/>
        <field name="context">{'search_default_groupby_lot_id': 1, 'search_default_groupby_product_id': 1, 'search_default_groupby_block_id': 1}</field>
        <field name="help">This report performs analysis on your Nursery Yield.</field>
    </record>

</odoo>