<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mrp_quality_inspect_wizard" model="ir.ui.view">
        <field name="name">view.mrp.quality.inspect.wizard</field>
        <field name="model">mrp.quality.inspect.wizard</field>
        <field name="arch" type="xml">
            <form string="Quality Inspect">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="product_id"/>
                        </h1>
                    </div>

                    <field name="message" readonly="1" force_save="1" style="margin-top: 15px;" attrs="{'invisible': [('message', '=', False)]}"/>

                    <group>
                        <field name="mode" invisible="1"/>
                        <field name="check_id" invisible="1"/>
                        <field name="point_id" invisible="1"/>
                        <field name="point_type" invisible="1"/>

                        <field name="measure" attrs="{'invisible': ['|', ('point_type', '!=', 'type2'), ('mode', '!=', 'main')], 'required': [('point_type', '=', 'type2'), ('mode', '=', 'main')]}"/>
                        <field name="attachment_ids" widget="many2many_binary" attrs="{'invisible': [('point_type', '!=', 'type3')], 'required': [('point_type', '=', 'type3')]}"/>
                        <field name="text" attrs="{'invisible': [('point_type', '!=', 'type4')], 'required': [('point_type', '=', 'type4')]}"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_check" type="object" string="Pass" class="oe_highlight" attrs="{'invisible': [('point_type', 'not in', ('type1', 'type3', 'type4'))]}" context="{'state': 'pass'}"/>
                    <button name="action_check" type="object" string="Validate" class="oe_highlight" attrs="{'invisible': ['|', ('point_type', '!=', 'type2'), ('mode', '!=', 'main')]}" context="{'state': 'pass'}"/>
                    <button name="action_check" type="object" string="Correct Measure" class="oe_highlight" attrs="{'invisible': ['|', ('point_type', '!=', 'type2'), ('mode', '!=', 'confirm')]}"/>
                    or
                    <button name="action_check" type="object" string="Fail" class="oe_highlight" attrs="{'invisible': [('point_type', 'not in', ('type1', 'type3', 'type4'))]}" context="{'state': 'fail'}"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" attrs="{'invisible': ['|', ('point_type', '!=', 'type2'), ('mode', '!=', 'main')]}"/>
                    <button name="action_check" type="object" string="Confirm Measure" class="oe_highlight" attrs="{'invisible': ['|', ('point_type', '!=', 'type2'), ('mode', '!=', 'confirm')]}" context="{'force_validate': True, 'state': 'fail'}"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_view_mrp_quality_inspect_wizard" model="ir.actions.act_window">
        <field name="name">Quality Inspect</field>
        <field name="res_model">mrp.quality.inspect.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>