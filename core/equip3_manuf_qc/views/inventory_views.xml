<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_repair_order_form_inherit_qc" model="ir.ui.view">
        <field name="name">repair.order.inherit.view.form</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="equip3_inventory_qc.view_repair_order_form_inherit_qc"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='quality_check_id']" position="after">
                <field name="mrp_quality_check_id" attrs="{'invisible':[('mrp_quality_check_id', '=', False)]}"/>
            </xpath>
        </field>
    </record>

    <record id="view_internal_transfer_form_inherit_qc" model="ir.ui.view">
        <field name="name">internal.transfer.inherit.view.form</field>
        <field name="model">internal.transfer</field>
        <field name="inherit_id" ref="equip3_inventory_qc.view_internal_transfer_form_inherit_qc"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='quality_check_id']" position="after">
                <field name="mrp_quality_check_id" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="stock_scrap_form_view" model="ir.ui.view">
        <field name="name">stock.scrap.form</field>
        <field name="model">stock.scrap</field>
        <field name="inherit_id" ref="stock.stock_scrap_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <field name="mrp_quality_check_id" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
