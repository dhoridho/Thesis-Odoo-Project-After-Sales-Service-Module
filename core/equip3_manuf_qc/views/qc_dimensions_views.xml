<?xml version="1.0"?>
<odoo>
    <record id="dimension_check_tree_view" model="ir.ui.view">
        <field name="name">dimension.check.tree.view</field>
        <field name="model">checksheet.dimensions</field>
        <field name="arch" type="xml">
            <tree string="Checksheet Dimensions">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="dimension_check_form_view" model="ir.ui.view">
        <field name="name">dimension.check.form.view</field>
        <field name="model">checksheet.dimensions</field>
        <field name="arch" type="xml">
            <form string="Checksheet Dimensions">
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="checksheet_dimension_action" model="ir.actions.act_window">
        <field name="name">Checksheet Dimension</field>
        <field name="res_model">checksheet.dimensions</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="dimension_check_tree_view" />
    </record>

    <menuitem id="menu_dimension_checksheet" action="checksheet_dimension_action" parent="sh_inventory_mrp_qc.quality_control_config" sequence="3" />

</odoo>