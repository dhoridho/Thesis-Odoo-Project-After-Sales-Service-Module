<?xml version="1.0"?>
<odoo>
    <!-- ALL OPERATION ACTIONS -->
    <record id="plan_pending_qc_action" model="ir.actions.act_window">
        <field name="name">Production Plan Pending QC</field>
        <field name="res_model">mrp.plan</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('pending_qc','=',True)]</field>
        <field name="context">{'create': 0}</field>
    </record>

    <record id="plan_failed_qc_action" model="ir.actions.act_window">
        <field name="name">Production Plan Failed QC</field>
        <field name="res_model">mrp.plan</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('qc_fail','=',True)]</field>
        <field name="context">{'create': 0}</field>
    </record>

    <record id="plan_fully_passed_qc_action" model="ir.actions.act_window">
        <field name="name">Production Plan Passed QC</field>
        <field name="res_model">mrp.plan</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('qc_pass','=',True)]</field>
        <field name="context">{'create': 0}</field>
    </record>

    <record id="sh_inventory_mrp_qc.mrp_pending_qc_action" model="ir.actions.act_window">
        <field name="name">Production Order Pending QC</field>
        <field name="context">{'create': 0}</field>
    </record>

    <record id="sh_inventory_mrp_qc.mrp_failed_qc_action" model="ir.actions.act_window">
        <field name="name">Production Order Failed QC</field>
        <field name="context">{'create': 0}</field>
    </record>

    <record id="sh_inventory_mrp_qc.mrp_fully_passed_qc_action" model="ir.actions.act_window">
        <field name="name">Production Order Passed QC</field>
        <field name="context">{'create': 0}</field>
    </record>

    <record id="sh_inventory_mrp_qc.workorder_pending_qc_action" model="ir.actions.act_window">
        <field name="name">Production Pending QC</field>
        <field name="context">{'create': 0}</field>
    </record>

    <record id="sh_inventory_mrp_qc.workorder_failed_qc_action" model="ir.actions.act_window">
        <field name="name">Production Failed QC</field>
        <field name="context">{'create': 0}</field>
    </record>

    <record id="sh_inventory_mrp_qc.workorder_fully_passed_qc_action" model="ir.actions.act_window">
        <field name="name">Production Passed QC</field>
        <field name="context">{'create': 0}</field>
    </record>

    <record id="consumption_pending_qc_action" model="ir.actions.act_window">
        <field name="name">Production Record Pending QC</field>
        <field name="res_model">mrp.consumption</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('pending_qc','=',True)]</field>
        <field name="context">{'create': 0}</field>
    </record>

    <record id="consumption_failed_qc_action" model="ir.actions.act_window">
        <field name="name">Production Record Failed QC</field>
        <field name="res_model">mrp.consumption</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('qc_fail','=',True)]</field>
        <field name="context">{'create': 0}</field>
    </record>

    <record id="consumption_fully_passed_qc_action" model="ir.actions.act_window">
        <field name="name">Production Record Passed QC</field>
        <field name="res_model">mrp.consumption</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('qc_pass','=',True)]</field>
        <field name="context">{'create': 0}</field>
    </record>

    <!-- QUALITY CHECKS -->
    <record id="plan_quality_check_action" model="ir.actions.act_window">
        <field name="name">Production Plan Quality Check</field>
        <field name="res_model">sh.mrp.quality.check</field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="context">{'search_default_control_point':1}</field>
        <field name="domain">[('sh_plan_id','!=',False)]</field>
        <field name="view_id" ref="plan_quality_check_tree_view"/>
    </record>

    <record id="sh_inventory_mrp_qc.mrp_quality_check_action" model="ir.actions.act_window">
        <field name="name">Production Quality Check</field>
    </record>

    <record id="sh_inventory_mrp_qc.wo_quality_check_action" model="ir.actions.act_window">
        <field name="name">Production Work Order Quality Check</field>
    </record>

    <record id="consumption_quality_check_action" model="ir.actions.act_window">
        <field name="name">Production Record Quality Check</field>
        <field name="res_model">sh.mrp.quality.check</field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="context">{'search_default_control_point':1}</field>
        <field name="domain">[('sh_consumption_id','!=',False)]</field>
        <field name="view_id" ref="consumption_quality_check_tree_view"/>
    </record>

    <!-- QUALITY ALERTS -->
    <record id="plan_quality_alert_action" model="ir.actions.act_window">
        <field name="name">Production Plan Quality Alert</field>
        <field name="res_model">sh.mrp.quality.alert</field>
        <field name="view_mode">kanban,tree,form,pivot</field>
        <field name="context">{'search_default_stage':1}</field>
        <field name="domain">[('plan_id','!=',False)]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create a New Quality Alert</p>
        </field>
    </record>

    <record id="sh_inventory_mrp_qc.mrp_quality_alert_action" model="ir.actions.act_window">
        <field name="name">Production Order Quality Alert</field>
        <field name="view_mode">kanban,tree,form,pivot</field>
        <field name="context">{'search_default_stage':1}</field>
    </record>

    <record id="sh_inventory_mrp_qc.wo_quality_alert_action" model="ir.actions.act_window">
        <field name="name">Production Work Order Quality Alert</field>
        <field name="view_mode">kanban,tree,form,pivot</field>
        <field name="context">{'search_default_stage':1}</field>
    </record>

    <record id="consumption_quality_alert_action" model="ir.actions.act_window">
        <field name="name">Production Record Quality Alert</field>
        <field name="res_model">sh.mrp.quality.alert</field>
        <field name="view_mode">kanban,tree,form,pivot</field>
        <field name="context">{'search_default_stage':1}</field>
        <field name="domain">[('consumption_id','!=',False)]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create a New Quality Alert</p>
        </field>
    </record>

    <!-- REPORTING ACTIONS -->
    <record id="plan_quality_check_report_action" model="ir.actions.act_window">
        <field name="name">Production Plan Quality Check</field>
        <field name="res_model">sh.mrp.quality.check</field>
        <field name="domain">[('sh_plan_id','!=',False)]</field>
        <field name="view_mode">pivot</field>
    </record>

    <record id="plan_quality_alert_report_action" model="ir.actions.act_window">
        <field name="name">Production Plan Quality Alert</field>
        <field name="res_model">sh.mrp.quality.alert</field>
        <field name="domain">[('plan_id','!=',False)]</field>
        <field name="view_mode">pivot</field>
    </record>

    <record id="plan_quality_check_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Production Plan Quality Check Report</field>
        <field name="res_model">mrp.quality.check.report</field>
        <field name="context">{'default_is_plan':1}</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="plan_quality_alert_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Production Plan Quality Alert Report</field>
        <field name="res_model">mrp.quality.alert.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_operation_type':'manufacturing'}</field>
    </record>

    <record id="sh_inventory_mrp_qc.mrp_quality_check_report_action" model="ir.actions.act_window">
        <field name="name">Production Quality Check</field>
    </record>

    <record id="sh_inventory_mrp_qc.mrp_quality_alert_report_action" model="ir.actions.act_window">
        <field name="name">Production Order Quality Alert</field>
    </record>

    <record id="sh_inventory_mrp_qc.mrp_quality_check_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Production Quality Check Report</field>
    </record>

    <record id="sh_inventory_mrp_qc.mrp_quality_alert_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Production Order Quality Alert Report</field>
    </record>

    <record id="sh_inventory_mrp_qc.wo_quality_check_report_action" model="ir.actions.act_window">
        <field name="name">Production Work Order Quality Check</field>
    </record>

    <record id="sh_inventory_mrp_qc.wo_quality_alert_report_action" model="ir.actions.act_window">
        <field name="name">Production Work Order Quality Alert</field>
    </record>

    <record id="consumption_quality_check_report_action" model="ir.actions.act_window">
        <field name="name">Production Record Quality Check</field>
        <field name="res_model">sh.mrp.quality.check</field>
        <field name="domain">[('sh_consumption_id','!=',False)]</field>
        <field name="view_mode">pivot</field>
    </record>

    <record id="consumption_quality_alert_report_action" model="ir.actions.act_window">
        <field name="name">Production Record Quality Alert</field>
        <field name="res_model">sh.mrp.quality.alert</field>
        <field name="domain">[('consumption_id','!=',False)]</field>
        <field name="view_mode">pivot</field>
    </record>

    <record id="consumption_quality_check_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Production Record Quality Check Report</field>
        <field name="res_model">mrp.quality.check.report</field>
        <field name="context">{'default_is_consumption':1}</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="consumption_quality_alert_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Production Record Quality Alert Report</field>
        <field name="res_model">mrp.quality.alert.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_operation_type':'manufacturing'}</field>
    </record>
</odoo>