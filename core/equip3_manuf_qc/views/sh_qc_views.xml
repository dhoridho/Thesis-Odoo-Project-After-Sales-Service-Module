<?xml version="1.0"?>
<odoo>
    <!-- QUALITY CHECK VIEWS -->
    <record id="plan_quality_check_tree_view" model="ir.ui.view">
        <field name="name">plan.sh.mrp.quality.check.tree.view</field>
        <field name="model">sh.mrp.quality.check</field>
        <field name="arch" type="xml">
            <tree decoration-danger="state == 'fail'" decoration-success="state == 'pass'" expand="1">
                <field name="product_id"/>
                <field name="sh_plan_id"/>
                <field name="sh_date"/>
                <field name="control_point_id"/>
                <field name="type_of_qc"/>
                <field name="state" widget="badge" decoration-success="state == 'pass'" decoration-danger="state == 'fail'"/>
            </tree>
        </field>
    </record>

    <record id="mrp_quality_check_tree_view" model="ir.ui.view">
        <field name="name">mrp.sh.mrp.quality.check.tree.view</field>
        <field name="model">sh.mrp.quality.check</field>
        <field name="inherit_id" ref="sh_inventory_mrp_qc.mrp_quality_check_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="expand">1</attribute>
            </xpath>
            <xpath expr="//field[@name='sh_control_point']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='sh_norm']" position="after">
                <xpath expr="//field[@name='state']" position="move"/>
            </xpath>
            <xpath expr="//field[@name='sh_norm']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='text_message']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='qc_type']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='qc_type']" position="after">
                <field name="type_of_qc"/>
            </xpath>
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="widget">badge</attribute>
                <attribute name="decoration-success">state == 'pass'</attribute>
                <attribute name="decoration-danger">state == 'fail'</attribute>
            </xpath>
        </field>
    </record>

    <record id="wo_quality_check_tree_view" model="ir.ui.view">
        <field name="name">wo.sh.mrp.quality.check.tree.view</field>
        <field name="model">sh.mrp.quality.check</field>
        <field name="inherit_id" ref="sh_inventory_mrp_qc.wo_quality_check_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="expand">1</attribute>
            </xpath>
            <xpath expr="//field[@name='sh_control_point']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='sh_norm']" position="after">
                <xpath expr="//field[@name='state']" position="move"/>
            </xpath>
            <xpath expr="//field[@name='sh_norm']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='text_message']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='qc_type']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='qc_type']" position="after">
                <field name="type_of_qc"/>
            </xpath>
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="widget">badge</attribute>
                <attribute name="decoration-success">state == 'pass'</attribute>
                <attribute name="decoration-danger">state == 'fail'</attribute>
            </xpath>
        </field>
    </record>

    <record id="consumption_quality_check_tree_view" model="ir.ui.view">
        <field name="name">consumption.sh.mrp.quality.check.tree.view</field>
        <field name="model">sh.mrp.quality.check</field>
        <field name="arch" type="xml">
            <tree decoration-danger="state == 'fail'" decoration-success="state == 'pass'" expand="1">
                <field name="product_id"/>
                <field name="sh_consumption_id"/>
                <field name="sh_date"/>
                <field name="sh_control_point" invisible="1"/>
                <field name="control_point_id"/>
                <field name="type_of_qc"/>
                <field name="state" widget="badge" decoration-success="state == 'pass'" decoration-danger="state == 'fail'"/>
            </tree>
        </field>
    </record>

    <!-- QUALITY ALERT VIEWS -->
    <record id="mrp_quality_alert_tree_view" model="ir.ui.view">
        <field name="name">quality.alert.tree.view</field>
        <field name="model">sh.mrp.quality.alert</field>
        <field name="inherit_id" ref="sh_inventory_mrp_qc.mrp_quality_alert_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='title']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='lot_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>