<?xml version="1.0"?>
<odoo>
    <record id="quality_point_tree_view" model="ir.ui.view">
        <field name="name">quality.point.tree.view</field>
        <field name="model">sh.qc.point</field>
        <field name="inherit_id" ref="sh_inventory_mrp_qc.quality_point_tree_view"/>
        <field name="arch" type="xml">
            <!--xpath expr="//field[@name='name']" position="replace">
                <field name="name" string="Reference"/>
                <field name="description" string="Name"/>
            </xpath-->
            <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="quality_point_form_view" model="ir.ui.view">
        <field name="name">quality.point.form.view</field>
        <field name="model">sh.qc.point</field>
        <field name="inherit_id" ref="sh_inventory_mrp_qc.quality_point_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="invisible">1</attribute>
                <attribute name="required">0</attribute>
            </xpath>

            <!--xpath expr="//field[@name='operation']" position="replace"/-->

            <!--xpath expr="//field[@name='product_id']" position="after">
                <field name="description"/>
                <xpath expr="//field[@name='type']" position="move"/>
                <xpath expr="//field[@name='sh_norm']" position="move"/>
                <xpath expr="//label[@for='sh_unit_to']" position="move"/>
                <xpath expr="//label[@for='sh_unit_from']/parent::div" position="move"/>
                <xpath expr="//field[@name='number_of_test']" position="move"/>
                <field name="need_alert"/>
                <field name="auto_create_alert" attrs="{'invisible': [('need_alert', '=', False)]}"/>
            </xpath-->

            <xpath expr="//field[@name='company_id']" position="attributes">
                <attribute name="readonly">1</attribute>
                <attribute name="force_save">1</attribute>
            </xpath>

            <xpath expr="//field[@name='logged_user']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='logged_user']" position="before">
                <!--xpath expr="//field[@name='is_mandatory']" position="move"/-->
                <xpath expr="//field[@name='company_id']" position="move"/>
                <field name="branch_id" required="1"/>
                <!--xpath expr="//field[@name='team']" position="move"/-->
                <field name="create_date"/>
                <field name="create_uid" readonly="1" force_save="1"/>
            </xpath>

            <xpath expr="//notebook" position="inside">
                <page name="additional_info" string="Additional Info" invisible="1">
                    <group>
                        <group>
                            <field name="operation" required="1"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>