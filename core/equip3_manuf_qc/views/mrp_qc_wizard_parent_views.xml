<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mrp_qc_wizard_parent_form" model="ir.ui.view">
        <field name="name">view.mrp.qc.wizard.parent.form</field>
        <field name="model">mrp.qc.wizard.parent</field>
        <field name="arch" type="xml">
            <form string="Quality Checks">
                <sheet>
                    <field name="image_128" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1><field name="product_id" readonly="1"/></h1>
                    </div>
                    <field name="type_of_qc" invisible="1"/>
                    <notebook>
                        <page name="wizards" string="Wizards" invisible="1">
                            <field name="wizard_ids" context="{'tree_view_ref': 'equip3_manuf_qc.view_mrp_qc_wizard_tree'}"/>
                        </page>
                        <page name="quantitative" string="Quantitative" attrs="{'invisible': [('type_of_qc', 'not in', ['quantitative', 'both'])]}">
                            <field name="quantitative_ids"/>
                        </page>
                        <page name="qualitative" string="Qualitative" attrs="{'invisible': [('type_of_qc', 'not in', ['qualitative', 'both'])]}">
                            <field name="qualitative_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_confirm" type="object" class="oe_highlight" string="Confirm"/>
                    <button special="cancel" string="Close"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_view_mrp_qc_wizard_parent" model="ir.actions.act_window">
        <field name="name">Quality Checks</field>
        <field name="res_model">mrp.qc.wizard.parent</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="equip3_manuf_qc.view_mrp_qc_wizard_parent_form"/>
        <field name="target">new</field>
    </record>
</odoo>