<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mrp_qc_wizard_tree" model="ir.ui.view">
        <field name="name">view.mrp.qc.wizard.tree</field>
        <field name="model">mrp.qc.wizard</field>
        <field name="arch" type="xml">
            <tree string="Quality Checks" create="false" export_xlsx="false">
                <field name="move_id" invisible="1"/>
                <field name="consumption_id" invisible="1"/>
                <field name="point_name"/>
                <field name="point_id"/>
                <field name="product_id"/>
                <field name="product_type"/>
                <field name="point_type"/>
                <field name="point_number_of_test" optional="show"/>
                <field name="pass_count" string="Pass" optional="show"/>
                <field name="fail_count" string="Fail" optional="show"/>
                <field name="pending_count" string="Pending" optional="show"/>
                <field name="check_ids" invisible="1">
                    <tree>
                        <field name="control_point_id"/>
                        <field name="product_id"/>
                        <field name="state"/>
                    </tree>
                </field>
                <field name="state" widget="badge" decoration-danger="state == 'fail'" decoration-success="state == 'pass'"/>
                <button name="action_inspect" string="Inspect" class="oe_highlight" type="object" attrs="{'invisible': [('pending_count', '=', 0)]}"/>
            </tree>
        </field>
    </record>

    <record id="view_mrp_qc_wizard_search" model="ir.ui.view">
        <field name="name">view.mrp.qc.wizard.search</field>
        <field name="model">mrp.qc.wizard</field>
        <field name="arch" type="xml">
            <search string="Quality Checks">
                <field name="point_id"/>
                <field name="product_id"/>
                <field name="product_type"/>
                <field name="point_type"/>
                <field name="state"/>
                <group expand="0" string="Group By">
                    <filter string="Reference" name="control_point" context="{'group_by': 'point_id'}"/>
                    <filter string="Product" name="product" context="{'group_by': 'product_id'}"/>
                    <filter string="Product Type" name="product_type" context="{'group_by': 'product_type'}"/>
                    <filter string="QC Type" name="point_type" context="{'group_by': 'point_type'}"/>
                    <filter string="Status" name="status" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_view_mrp_qc_wizard" model="ir.actions.act_window">
        <field name="name">Quality Checks</field>
        <field name="res_model">mrp.qc.wizard</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="equip3_manuf_qc.view_mrp_qc_wizard_tree"/>
        <field name="search_view_id" ref="equip3_manuf_qc.view_mrp_qc_wizard_search"/>
        <field name="target">new</field>
    </record>
</odoo>