<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="act_open_change_menu_wizard" model="ir.actions.act_window">
            <field name="name">Change Menu</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">change.menu.wizard</field>
            <field name="view_mode">form</field>
            <field name="context">{'default_customer_mpl_id':active_id}</field>
            <field name="target">new</field>
        </record>

        <record id="view_change_menu_form" model="ir.ui.view">
            <field name="name">change.menu.wizard.form</field>
            <field name="model">change.menu.wizard</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="customer_mpl_id" invisible="1"/>
                        <field name="remark"/>
                    </group>
                    <notebook>
                        <page name="product" string="Products">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="menu_id"/>
                                    <field name="desc"/>
                                    <field name="quantity"/>
                                    <field name="uom_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                        <button string="Submit" name="action_change_menu" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>

                </form>
            </field>
        </record>
    </data>
</odoo>