<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="sale_template_header_catering">
       

            <div class="header">
                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                    <tbody>
                        <tr>
                            <td>
                                <center>
                                    <table border="0" cellpadding="0" cellspacing="0" style="padding:0px 20px 0px 20px; margin:0; background:#fff; line-height:20px;" width="100%">
                                        <tr>
                                            <td align="left" colspan="2" t-attf-style="color:#{text_color or '#ffffff'}; padding:0 0px;" valign="top">
                                                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                    <tr>
                                                        <td align="left" style="color:#4D4D4F; padding: 0px 15px; border-right: 1px solid #D4D1D1;" valign="top">
                                                            <img style="max-height: 50px; margin-top: 10%;" t-att-src="'data:image/png;base64,%s' % to_text(doc.company_id.logo)" t-if="doc.company_id.logo"/>
                                                        </td>
                                                    <td style="padding:15px; width:30%" valign="top">
                                                        <!-- <p t-attf-style="text-transform:capitalize; color: #{theme_color or '#ffffff'}; font-weight:bold;margin:0; margin-bottom:5px;">Address</p> -->
                                                        <t t-call="equip3_catering_operation.templates_company_details_2"/>
                                                    </td>
                                                        <td align="left" style="width:30%; padding:15px;" valign="top">
                                                        <t t-call="equip3_catering_operation.sale_templates_customer_details_2"/>
                                                    </td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="3" style="height:5px;"/>
                                        </tr>
                                    </table>
                                </center>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        

        <div class="article o_report_layout_standard" t-att-data-oe-id="doc and doc.id" t-att-data-oe-model="doc and doc._name">
            <t t-raw="0"/>
        </div>

        <div class="footer">
        
            <div class="text-center" style="border-top: 1px solid black;">
                <ul class="list-inline mb4">
                    <li t-if="doc.company_id.phone">Phone: 
                        <span t-field="doc.company_id.phone"/></li>
                    <li t-if="doc.company_id.email">Email: 
                        <span t-field="doc.company_id.email"/></li>
                    <li t-if="doc.company_id.website">Web: 
                        <span t-field="doc.company_id.website"/></li>
                    <li t-if="doc.company_id.vat">
                        <t t-esc="doc.company_id.country_id.vat_label or 'TIN'"/>: 
                        <span t-field="doc.company_id.vat"/></li>
                </ul>
                <div name="financial_infos">
                    <span t-field="doc.company_id.report_footer"/>
                </div>
                <div class="text-muted">Page: 
                    <span class="page"/>
                    / 
                    <span class="topage"/></div>
            </div>
        </div>
       
      

    </template>

    <template id="sale_templates_customer_details_2">
        <!-- <td align="left" style="padding:15px 0px 0px 15px; width:50%; line-height:18px;" valign="top">-->
      
        <t t-if="doc.partner_invoice_id">
            <span t-attf-style="text-transform:capitalize; padding:0px; margin:0; color: #51565b;">
                    <strong >Invoicing and shipping address:</strong><br/>
                 
                        <span t-field="doc.partner_invoice_id"/>
                
            
               
            </span>
            <p t-attf-style="color: #51565b;">
                <span t-esc="doc._get_street(doc.partner_invoice_id)"/>
                <br/>
                <span t-esc="doc._get_address_details(doc.partner_invoice_id)"/>
                <br/>
                <t t-if="doc.partner_invoice_id.mobile">
                    <strong>Mobile: </strong>
                    <span t-field="doc.partner_invoice_id.mobile"/>
                    <br/>
                </t>
                <t t-if="doc.partner_invoice_id.email">
                    <strong>Email: </strong>
                    <span t-field="doc.partner_invoice_id.email"/>
                    <br/>
                </t>
                <t t-if="doc.partner_invoice_id.vat">
                    <strong>Vat: </strong>
                    <span t-field="doc.partner_invoice_id.vat"/>
                </t>
            </p>
        </t>
     
        
    </template>

    <template id="templates_company_details_2">

      
            
    
        <span style="text-transform:capitalize; padding:0px; margin:0; color: #51565b;">
            <strong >Address:</strong>
            <br/>
            <t t-if="doc.company_id and doc.company_id.is_company_bold">
                <strong>
                    <span t-field="doc.company_id.partner_id"/>
                </strong>
            </t>
            <t t-if="not doc.company_id.is_company_bold">
                <span t-field="doc.company_id.partner_id"/>
            </t>
        </span>
        <div style="color: #51565b;">
            <span t-esc="doc._get_street(doc.company_id.partner_id)"/>
            <br/>
            <span t-esc="doc._get_address_details(doc.company_id.partner_id)"/>
            <br/>
        </div>
        <div style="color: #51565b;">
            <t t-if="doc.company_id.partner_id.mobile">
                <strong>Mobile:</strong>
                <span t-field="doc.company_id.partner_id.mobile"/>
                <br/>
            </t>
            <t t-if="doc.company_id.partner_id.email">
                <strong>Email:</strong>
                <span t-field="doc.company_id.partner_id.email"/>
                <br/>
            </t>
            <!--  <t t-if="o.company_id.is_show_bank_details"><strong>Bank: </strong><span t-esc="o.company_id.report_bank_id.acc_number"/></t>-->
        </div>
    </template>

<template id="action_report_catering_operation_document">
    <t t-call="equip3_catering_operation.sale_template_header_catering">
        
        <div class="page">
            <br/>
            <br/>
            <br/>
            <br/>
        

          <div class="oe_structure"/>

            <div>

            <table BORDERCOLOR="#{theme_color or '#454545'}" border="1" cellpadding="0" cellspacing="0" class="table table-bordered" style="border:0.5px solid #ccc;  border-collapse: collapse; text-transform:capitalize; padding:15px;border-bottom:1px solid #ccc;" width="100%">
            <thead>
              
                <tr t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#454545'}; color: #{theme_text_color or '#454545'};">
    
                    <td align="left" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#454545'} !important; border-right:0px solid #{theme_color or '#454545'} !important; font-weight:bold;"><font color="white">Order #</font></td>
                    <td align="left" t-attf-style="padding:5px 10px;border:1px solid #{theme_color or '#454545'} !important; border-right:0px solid #{theme_color or '#454545'} !important; font-weight:bold;"><font color="white">Date Ordered:</font></td>
                    <td align="left" t-attf-style="padding:5px 10px;border:1px solid #{theme_color or '#454545'} !important; border-right:0px solid #{theme_color or '#454545'} !important; font-weight:bold;"><font color="white">Start Date:</font></td>
                    <td align="left" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#454545'} !important; border-right:0px solid #{theme_color or '#454545'} !important; font-weight:bold;">
                    <font color="white">Expected End Date:</font></td>
                 
                </tr>

                  </thead>

                <tbody>  

                <tr t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#454545'}; color: #{theme_text_color or '#454545'};">
    
                    <td align="left" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#454545'} !important; border-right:0px solid #{theme_color or '#454545'} !important; font-weight:bold;"><font color="white"><span t-field="doc.name"/></font></td>
                    <td align="left" t-attf-style="padding:5px 10px;border:1px solid #{theme_color or '#454545'} !important; border-right:0px solid #{theme_color or '#454545'} !important; font-weight:bold;"><font color="white"><span t-field="doc.order_date"/></font></td>
                    <td align="left" t-attf-style="padding:5px 10px;border:1px solid #{theme_color or '#454545'} !important; border-right:0px solid #{theme_color or '#454545'} !important; font-weight:bold;"><font color="white"><span t-field="doc.start_date"/></font></td>
                    <td align="left" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#454545'} !important; border-right:0px solid #{theme_color or '#454545'} !important; font-weight:bold;">
                    <font color="white"><span t-field="doc.expected_date"/></font></td>
                 
                </tr>
            </tbody>
        
        </table>

    </div>

        <br/>
        <br/>
            
            <div>

                         <table BORDERCOLOR="#{theme_color or '#454545'}" border="1" cellpadding="0" cellspacing="0" class="table table-bordered" style="border:0.5px solid #ccc;  border-collapse: collapse; text-transform:capitalize; padding:15px;border-bottom:1px solid #ccc;" width="100%">
            <thead>
              
                <tr t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#454545'}; color: #{theme_text_color or '#454545'};">
                    <t t-set="colspan" t-value="5"/>
                    <td align="center" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#454545'} !important; border-right:0px solid #{theme_color or '#454545'} !important; font-weight:bold;" width="8%"><font color="white">No.</font></td>
                   
                    <td align="left" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#454545'} !important; border-right:0px solid #{theme_color or '#454545'} !important; font-weight:bold;" width="52%"><font color="white">Package Product</font></td>
                    <td align="center" t-attf-style="padding:5px 10px;border:1px solid #{theme_color or '#454545'} !important; border-right:0px solid #{theme_color or '#454545'} !important; font-weight:bold;" width="14%"><font color="white">Qty</font></td>
                    <td align="center" t-attf-style="padding:5px 10px;border:1px solid #{theme_color or '#454545'} !important; border-right:0px solid #{theme_color or '#454545'} !important; font-weight:bold;" width="15%"><font color="white">Tax</font></td>
                    <td align="center" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#454545'} !important; border-right:0px solid #{theme_color or '#454545'} !important; font-weight:bold;" width="12%">
                    <font color="white">Discount</font></td>
                    <td align="center" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#454545'} !important; border-right:0px solid #{theme_color or '#454545'} !important; font-weight:bold;" width="12%"><font color="white">Price</font></td>
                 
                </tr>
            </thead>
            <tbody class="sale_tbody">
                <t t-set="index_no" t-value="1"/>
                
                <t t-foreach="doc.order_line" t-as="line">
                  
        
                    <tr t-att-style="'page-break-inside: avoid !important; color: %s; background-color: %s '%(text_color, ol_color)  ">
                    
                            <td  align="center" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                <span t-esc="index_no"/>
                            </td>
                           
                            <td  align="left" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                <span t-esc="line.product_tmpl_id.name"/>
                                <br/>
                                <i><span t-field="line.package_id.description_sale"/></i>
                            </td>
                            <td  align="center" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                <span t-field="line.qty_order"/>
                                <span t-field="line.product_uom"/>
                               
                            </td>
                            <td  align="center" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                <span t-field="line.taxes_id"/>
                            </td>
                            <td  align="center" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                <span t-options='{"widget": "monetary", "display_currency": doc.currency_id}' t-field="line.disc"/>
                            </td>
                            <td  align="center" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                                <span t-options='{"widget": "monetary", "display_currency": doc.currency_id}' t-esc="line.subtotal"/>
                            </td>
            
                    </tr>

                   <t t-set="index_no" t-value="index_no+1"/>
                </t>
            </tbody>
        </table>

    </div>


