<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record model="ir.cron" id="auto_picking_catering_order">
            <field name="name">Catering : Auto-Picking</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="model_catering_order"/>
            <field name="nextcall" eval="datetime.now() + (datetime.now(pytz.timezone('Asia/Jakarta')).replace(hour=23, minute=59, second=59) - datetime.now(pytz.timezone('Asia/Jakarta'))) % timedelta(hours=24)"/>
            <field name="state">code</field>
            <field name="code">model._create_one_week_picking()</field>
        </record>
    </data>
</odoo>