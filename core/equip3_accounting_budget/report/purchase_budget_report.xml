<odoo>
    <template id="equip3_accounting_budget.purchase_budget_report">
        <t t-call="web.html_container">
            <t t-set="data_report_margin_top" t-value="12"/>
            <t t-set="data_report_header_spacing" t-value="9"/>
            <t t-set="data_report_dpi" t-value="110"/>
            <t t-call="web.internal_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <h3 style="text-align:centre;left:50%;"><span t-esc="Filters.get('company_name')"/>: Purchase Budget
                    </h3>

                    <span t-if="Filters.get('date_from')">
                        <strong> From:</strong>
                        <t t-esc="Filters['date_from']"/>
                    </span>

                    <span t-if="Filters.get('date_to')">
                        <strong>To:</strong>
                        <t t-esc="Filters['date_to']"/>
                    </span>

                    <div>
                        <div style="text-align:centre;left:50%;" class="row">
                            <div class="col-2" style="">
                                <strong>Company:</strong>
                                <t t-foreach="Filters['companies']" t-as="ps">
                                    <li>
                                        <t t-esc="ps"/>
                                    </li>
                                </t>
                            </div>
                            <div class="col-2">
                                <strong>Branch:</strong>
                                <t t-foreach="Filters['branches']" t-as="ps">
                                    <li>
                                        <t t-esc="ps"/>
                                    </li>
                                </t>
                            </div>
                            <div class="col-2">
                                <strong>Analytic Group:</strong>
                                <t t-foreach="Filters['analytic_tags']" t-as="ps">
                                    <li>
                                        <t t-esc="ps"/>
                                    </li>
                                </t>
                            </div>
                        </div>
                        <div style="text-align:centre;left:50%;" class="row"></div>

                        <br></br>
                        
                        <table class="table table-sm table-reports" style="padding:5px;">
                            <thead>
                                <tr class="text-center">
                                    <th style="text-align:left;">Purchase Budget</th>
                                    <th style="text-align:left;">Company</th>
                                    <th style="text-align:left;">Branch</th>
                                    <th style="text-align:left;">Analytic Group</th>
                                    <th style="text-align:left;">Start Date</th>
                                    <th style="text-align:left;">End Date</th>
                                    <th style="text-align:right;">Planned Amount</th>
                                    <th style="text-align:right;">Available to Reserve</th>
                                    <th style="text-align:right;">Reserved Amount</th>
                                    <th style="text-align:right;">Used Amount</th>
                                    <th style="text-align:right;">Remaining Amount</th>
                                    <!-- <th style="text-align:right;">Status</th> -->
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="account_data" t-as="account">
                                    <t t-if="account['parent_budget_id'] == false">
                                        <tr>
                                            <td>
                                                <span t-esc="account['name']"/>
                                            </td>
                                            <td>
                                                <span t-esc="account['company_id']"/>
                                            </td>
                                            <td>
                                                <span t-esc="account['branch_id']"/>
                                            </td>
                                            <td>
                                                <span t-esc="account['analytic_tags']"/>
                                            </td>
                                            <td>
                                                <span t-esc="account['date_from']"/>
                                            </td>
                                            <td>
                                                <span t-esc="account['date_to']"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="account['planned_amount']" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="account['avail_amount']" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="account['reserve_amount']" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="account['practical_amount']" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="account['remaining_amount']" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                            </td>
                                            <!-- <td class="text-right">
                                                <span t-esc="account['state']"/>
                                            </td> -->
                                        </tr>
                                        <tr t-foreach="account['child_lines']" t-as="line">
                                            <td style="padding-left:20px;">
                                                <span t-esc="line['name']"/>
                                            </td>
                                            <td>
                                                <span t-esc="line['company_id']"/>
                                            </td>
                                            <td>
                                                <span t-esc="line['branch_id']"/>
                                            </td>
                                            <td>
                                                <span t-esc="line['analytic_tags']"/>
                                            </td>
                                            <td>
                                                <span t-esc="line['date_from']"/>
                                            </td>
                                            <td>
                                                <span t-esc="line['date_to']"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="line['planned_amount']" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="line['avail_amount']" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="line['reserve_amount']" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="line['practical_amount']" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="line['remaining_amount']" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                            </td>
                                            <!-- <td class="text-right">
                                                <span t-esc="line['state']"/>
                                            </td> -->

                                            <tr t-foreach="line['child_lines']" t-as="line2">
                                                <td style="padding-left:40px;">
                                                    <span t-esc="line2['name']"/>
                                                </td>
                                                <td>
                                                    <span t-esc="line2['company_id']"/>
                                                </td>
                                                <td>
                                                    <span t-esc="line2['branch_id']"/>
                                                </td>
                                                <td>
                                                    <span t-esc="line2['analytic_tags']"/>
                                                </td>
                                                <td>
                                                    <span t-esc="line2['date_from']"/>
                                                </td>
                                                <td>
                                                    <span t-esc="line2['date_to']"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="line2['planned_amount']" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="line2['avail_amount']" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="line2['reserve_amount']" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="line2['practical_amount']" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="line2['remaining_amount']" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                                </td>
                                                <!-- <td class="text-right">
                                                    <span t-esc="line2['state']"/>
                                                </td> -->
                                            </tr>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>
                    </div>
                    <br></br>
                </div>
            </t>
        </t>
    </template>

    <record id="equip3_accounting_budget.action_print_purchase_budget_report" model="ir.actions.report">
        <field name="name">Purchase Budget Report</field>
        <field name="model">purchase.budget.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">equip3_accounting_budget.purchase_budget_report</field>
        <field name="report_file">equip3_accounting_budget.purchase_budget_report</field>
    </record>

</odoo>