<templates>
    <t t-name="PurchaseBudgetReportTemp">
        <div>
            <div>
                <h1 style="padding:10px">
                    Purchase Budget Report
                </h1>
            </div>
            <div>
                <div class="filter_view_tb"></div>
            </div>
            <br></br>
            <div>
                <div class="table_view_tb" style="right:20px;"></div>
            </div>
        </div>
    </t>

    <t t-name="PurchaseBudgetReportTable">
        <div>
            <div class="table_main_view">
                <table cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th colspan="6">Purchase Budget</th>
                            <th style="width: 6%;">Start Date</th>
                            <th style="width: 6%;">End Date</th>
                            <th class="mon_fld" style="width: 11%;">Planned Amount</th>
                            <th class="mon_fld" style="width: 11%;">Available to Reserve</th>
                            <th class="mon_fld" style="width: 11%;">Reserved Amount</th>
                            <th class="mon_fld" style="width: 11%;">Used Amount</th>
                            <th class="mon_fld" style="width: 11%;">Remaining Amount</th>
                            <!-- <th class="mon_fld" style="width: 6%;">Status</th> -->
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="report_lines" t-as="account">
                            <t t-if="account['parent_budget_id'] == false">
                                <tr style="border: 0.5px solid #deb9b9;" class="gl-line collapsed"
                                    data-toggle="collapse"
                                    t-att-data-account-id="account['id']"
                                    t-att-data-account-name="account['name']"
                                    t-attf-data-target=".a{{account['id']}}">
                                    <td colspan="6" style="border: 0px solid black; padding-left: 0px;">
                                        <t t-if="account['is_parent'] == true">
                                            <i class="fa fa-caret-down" role="img" aria-label="Unfolded" title="Unfolded"></i>
                                        </t>
                                        <span>
                                            <t t-esc="account['name']"/>
                                        </span>
                                        <td>
                                            <t t-esc="account['date_from']"/>
                                        </td>
                                        <td>
                                            <t t-esc="account['date_to']"/>
                                        </td>
                                        <t t-if="currency[1] == 'before'">
                                            <td style="text-align:right;">
                                                <t t-if="account['planned_amount_format_currency'] == 0">
                                                    <span>-</span>
                                                </t>
                                                <t t-else="">
                                                    <t t-esc="currency[0]"/>
                                                    <t t-esc="account['planned_amount_format_currency']"/>
                                                </t>
                                            </td>
                                            <td style="text-align:right;">
                                                <t t-if="account['avail_amount_format_currency'] == 0">
                                                    <span>-</span>
                                                </t>
                                                <t t-else="">
                                                    <t t-esc="currency[0]"/>
                                                    <t t-esc="account['avail_amount_format_currency']"/>
                                                </t>
                                            </td>
                                            <td style="text-align:right;">
                                                <t t-if="account['reserve_amount_format_currency'] == 0">
                                                    <span>-</span>
                                                </t>
                                                <t t-else="">
                                                    <t t-esc="currency[0]"/>
                                                    <t t-esc="account['reserve_amount_format_currency']"/>
                                                </t>
                                            </td>
                                            <td style="text-align:right;">
                                                <t t-if="account['practical_amount_format_currency'] == 0">
                                                    <span>-</span>
                                                </t>
                                                <t t-else="">
                                                    <t t-esc="currency[0]"/>
                                                    <t t-esc="account['practical_amount_format_currency']"/>
                                                </t>
                                            </td>
                                            <td style="text-align:right;">
                                                <t t-if="account['remaining_amount_format_currency'] == 0">
                                                    <span>-</span>
                                                </t>
                                                <t t-else="">
                                                    <t t-esc="currency[0]"/>
                                                    <t t-esc="account['remaining_amount_format_currency']"/>
                                                </t>
                                            </td>
                                        </t>
                                        <t t-else="">
                                            <td style="text-align:right;">
                                                <t t-if="account['planned_amount_format_currency'] == 0">
                                                    <span>-</span>
                                                </t>
                                                <t t-else="">
                                                    <t t-esc="account['planned_amount_format_currency']"/>
                                                    <t t-esc="currency[0]"/>
                                                </t>
                                            </td>
                                            <td style="text-align:right;">
                                                <t t-if="account['avail_amount_format_currency'] == 0">
                                                    <span>-</span>
                                                </t>
                                                <t t-else="">
                                                    <t t-esc="account['avail_amount_format_currency']"/>
                                                    <t t-esc="currency[0]"/>
                                                </t>
                                            </td>
                                            <td style="text-align:right;">
                                                <t t-if="account['reserve_amount_format_currency'] == 0">
                                                    <span>-</span>
                                                </t>
                                                <t t-else="">
                                                    <t t-esc="account['reserve_amount_format_currency']"/>
                                                    <t t-esc="currency[0]"/>
                                                </t>
                                            </td>
                                            <td style="text-align:right;">
                                                <t t-if="account['practical_amount_format_currency'] == 0">
                                                    <span>-</span>
                                                </t>
                                                <t t-else="">
                                                    <t t-esc="account['practical_amount_format_currency']"/>
                                                    <t t-esc="currency[0]"/>
                                                </t>
                                            </td>
                                            <td style="text-align:right;">
                                                <t t-if="account['remaining_amount_format_currency'] == 0">
                                                    <span>-</span>
                                                </t>
                                                <t t-else="">
                                                    <t t-esc="account['remaining_amount_format_currency']"/>
                                                    <t t-esc="currency[0]"/>
                                                </t>
                                            </td>
                                        </t>
                                        <!-- <td style="text-align:right;">
                                            <t t-esc="account['state']"/>
                                        </td> -->
                                    </td>
                                    <tr t-attf-class="collapse a{{account['id']}}">
                                        <td colspan="14">
                                            <ul>

                                            </ul>
                                        </td>
                                    </tr>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>
            </div>
        </div>
    </t>

    <t t-name="PurchaseBudgetFilterView">
        <div style="position: relative;">
            <br />
            <div class="sub_container_right" style="width:50%;height:3%;right:0px;top:0px;position: absolute;">
                <div>
                    <button class="btn btn-primary o_filters_toggler" id="o_equip_filter_dropdown" style="position: absolute; right: 35.63%; top: 17.78%; bottom: 79.17%; height: 30px; padding: 0; width: 20%;">
                        <span style="align-items: center; justify-content: center;">
                            <i class="fa fa-search mr-2" style="font-size: 17px !important;"/>
                        </span>
                        <span style="font-size: 17px;">&#160;Filter</span>
                    </button>

                    <div class="filter_content" style="position:relative; top:43px; left:2%; width:67%; display:none; text-align:right; background-color: white; filter: drop-shadow(0px 0px 16px rgba(0, 0, 0, 0.161)); padding: 5px;">
                        <div style="text-align:center;">
                            <button type="button" id="apply_filter" class="btn btn-primary" style="padding: 0; height: 25px; width: 25%;"
                            >
                                Apply
                            </button>
                        </div>
                        <br />
                        <div class="time_range" style="">
                            <div class="btn-group o_account_reports_date-filter" style="width:100%;">
                                <a type="button" class="dropdown-toggle dropdown-item" data-toggle="dropdown" style="width:100%;">
                                    <span class="fa fa-calendar filter-content" style="float: left;"></span>
                                    <span class="filter-content" style="float: left;">&#160;Date (Period): </span>
                                    <span class="date_caret"/>
                                </a>
                                <ul class="dropdown-menu o_filters_menu o_date_filter" role="menu" style="width:100%;">
                                    <t>
                                        <li class="filter_date" title="This Month" data-value="this_month"><a class="dropdown-item">This Month</a></li>
                                        <li class="filter_date" title="This Quarter" data-value="this_quarter"><a class="dropdown-item">This Quarter</a></li>
                                        <li class="filter_date" title="This Financial Year" data-value="this_financial_year"><a class="dropdown-item">This Financial Year</a></li>
                                        <li role="separator" class="dropdown-divider"></li>
                                        <li class="filter_date" title="Last Month" data-value="last_month"><a class="dropdown-item">Last Month</a></li>
                                        <li class="filter_date" title="Last Quarter" data-value="last_quarter"><a class="dropdown-item">Last Quarter</a></li>
                                        <li class="filter_date" title="Last Financial Year" data-value="last_year"><a class="dropdown-item">Last Financial Year</a></li>
                                        <li role="separator" class="dropdown-divider"></li>
                                    </t>
                                    <div class="o_generator_menu"><button type="button" aria-expanded="false" class="o_add_custom_filter dropdown-item">Custom</button></div>
                                    <li class="o_account_reports_custom-dates" data-value='custom' style='margin-top: 5px;'>
                                        <div class="o_filter_condition dropdown-item-text">
                                            <label class="" for="date_from"><b>Start Date :</b></label>
                                            <div class="">
                                                <div class="" aria-atomic="true" id="">
                                                    <input class="dropdown-item" type="date" id="date_from"></input>
                                                </div>
                                            </div>
                                            <label class="" for="date_to"><b>End Date :</b></label>
                                            <div class="">
                                                <div class="" aria-atomic="true" id="">
                                                    <input class="dropdown-item" type="date" id="date_to"></input>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <div class="company_filter" style="width:100%;">
                            <a type="button" class="dropdown-toggle dropdown-item" data-toggle="dropdown" style="width:100%;">
                                <span class="fa fa-users filter-content" style="float: left;"></span>
                                <span class="filter-content" style="float: left;">&#160;Company: </span>
                                <span id="company_res"></span>
                            </a>
                            <select class="dropdown-menu companies" name="states[]" multiple="multiple" style="width:100%;">
                                <t t-foreach="filter_data.companies_list" t-as="company">
                                    <option t-attf-value="{{company[0]}}">
                                        <t t-esc="company[1]"/>
                                    </option>
                                </t>
                            </select>
                        </div>

                        <div class="branch_filter" style="width:100%;">
                            <a type="button" class="dropdown-toggle dropdown-item" data-toggle="dropdown" style="width:100%;">
                                <span class="fa fa-users filter-content" style="float: left;"></span>
                                <span class="filter-content" style="float: left;">&#160;Branch: </span>
                                <span id="branch_res"></span>
                            </a>
                            <select class="dropdown-menu branches" name="states[]" multiple="multiple" style="width:100%;">
                                <t t-foreach="filter_data.branches_list" t-as="branch">
                                    <option t-attf-value="{{branch[0]}}">
                                        <t t-esc="branch[1]"/>
                                    </option>
                                </t>
                            </select>
                        </div>

                        <div class="analytic_tags_filter" style="width:100%;">
                            <a type="button" class="dropdown-toggle dropdown-item" data-toggle="dropdown" style="width:100%;">
                                <span class="fa fa-book filter-content" style="float: left;"></span>
                                <span class="filter-content" style="float: left;">&#160;Analytic Group: </span>
                                <span id="analytic_tag_res"></span>
                            </a>
                            <select class="dropdown-menu analytic_tags" name="states[]" multiple="multiple" style="width:100%;">
                                <t t-foreach="filter_data.analytic_tag_list" t-as="analytic_tag">
                                    <option t-attf-value="{{analytic_tag[0]}}">
                                        <t t-esc="analytic_tag[1]"/>
                                    </option>
                                </t>
                            </select>
                        </div>
                    </div>
                    <button type="button" class="btn btn-primary" id="pdf"
                            style="position: absolute; right: 25.63%; top: 17.78%; bottom: 79.17%; height: 30px;">
                        PDF
                    </button>
                    <button type="button" class="btn btn-primary" id="xlsx"
                            style="position: absolute; right: 15.42%; top: 17.78%; bottom: 79.17%; height: 30px;">
                        XLSX
                    </button>
                    <button type="button" class="btn btn-primary collapse-all" id="collapse-button"
                            style="position: absolute; right: 1.42%; top: 17.78%; bottom: 79.17%; height: 30px;">
                        Expand
                    </button>
                </div>
            </div>

            <br /> <br /> <hr />

            <div class="active-filter" style="margin-left: 2%; display: none;">
                <style>
                    .a-active-filter {
                        border: 1px solid black; 
                        border-radius: 25px; 
                        padding: 0 10px 0 10px; 
                        margin-right:5px;
                        display: none;
                    }
                </style>

                <span class="fa fa-circle" style="color: lightgreen;"></span>
                <span class="">&#160;Active filter</span>
                <br />

                <a class="date-filter a-active-filter">
                    <span class="fa fa-calendar"/>
                    <t>Date: </t>
                    <span class="date_caret"/>
                </a>

                <a class="companies-filter a-active-filter">
                    <span class="fa fa-users"></span>
                    Company:
                    <span id="company_res"></span>
                </a>

                <a class="branches-filter a-active-filter">
                    <span class="fa fa-users"></span>
                    Branch:
                    <span id="branch_res"></span>
                </a>

                <a class="analytic-tags-filter a-active-filter">
                    <span class="fa fa-book"></span>
                    <span>Analytic Group: </span>
                    <span id="analytic_tag_res"></span>
                </a>
            </div>
            <br />
            <div class="clear-filter" style="margin-left: 2%; display: none;">
                <style>
                    .btn-clear-filter {
                        border: 1px solid black !important; 
                        border-radius: 25px !important; 
                        padding: 0 10px 0 10px; 
                        margin-right:5px;
                        color: white !important;
                        background-color: #707070 !important;
                    }
                </style>

                <button class="btn-clear-filter btn-secondary">
                    <t>Clear All Filter</t>
                </button>
            </div>
        </div>
    </t>

