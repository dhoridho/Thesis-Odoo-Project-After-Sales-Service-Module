<odoo>
    <record id="view_monthly_purchase_budget_confirm_form" model="ir.ui.view">
        <field name="name">view.monthly.purchase.budget.confirm.form</field>
        <field name="model">monthly.purchase.budget.confirm</field>
        <field name="arch" type="xml">
            <form string="Confirm Monthly Purchase Budget Done">
                <group>
                    <field name="message" readonly="1"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_monthly_purchase_budget_confirm" model="ir.actions.act_window">
        <field name="name">Confirm Budget Done</field>
        <field name="res_model">monthly.purchase.budget.confirm</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_monthly_purchase_budget_confirm_form"/>
        <field name="target">new</field>
    </record>

    <record id="view_monthly_purchase_budget_next_period_form" model="ir.ui.view">
        <field name="name">view.monthly.purchase.budget.next.period.form</field>
        <field name="model">monthly.purchase.budget.next.period</field>
        <field name="arch" type="xml">
            <form string="Next Period Monthly Purchase Budget">
                <group>
                    <p>Are you sure you want to mark this budget as done? <br/>
                    if you change state to done, The remaining amount will be carried over to the next period/month.</p>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>

    </record>

    <record id="action_monthly_purchase_budget_next_period" model="ir.actions.act_window">
        <field name="name">Next Period Budget</field>
        <field name="res_model">monthly.purchase.budget.next.period</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_monthly_purchase_budget_next_period_form"/>
        <field name="target">new</field>
    </record>

    <record id="view_monthly_purchase_budget_end_period_form" model="ir.ui.view">
        <field name="name">view.monthly.purchase.budget.end.period.form</field>
        <field name="model">monthly.purchase.budget.end.period</field>
        <field name="arch" type="xml">
            <form string="End Period Monthly Purchase Budget">
                <group>
                    <p>Are you sure you want to mark this budget as done? <br/>
                    if you change state to done, The remaining amount will be returned to the budget owner / parent budget.</p>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_monthly_purchase_budget_end_period" model="ir.actions.act_window">
        <field name="name">End Period Budget</field>
        <field name="res_model">monthly.purchase.budget.end.period</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_monthly_purchase_budget_end_period_form"/>
        <field name="target">new</field>
    </record>
</odoo>