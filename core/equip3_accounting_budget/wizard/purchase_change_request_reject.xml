<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_change_request_wizard_form" model="ir.ui.view">
        <field name="name">purchase.change.request.wizard.form</field>
        <field name="model">purchase.change.request.wizard</field>
        <field name="arch" type="xml">
            <form string="Reason">
                <group>
                    <field name="reason" required="1"/>
                </group>
                <footer>
                    <button name="action_reject" string="Confirm" type="object" class="oe_highlight" />
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
