<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <menuitem
            id="unused_menu2"
            name="Unused Menu 2"
            parent="base.menu_custom"
            sequence="53"
            groups="base.group_system"
        />

    <record model="ir.ui.view" id="purchase_budget_view_form">
        <field name="name">budget.purchase.view.form</field>
        <field name="model">budget.purchase</field>
        <field name="arch" type="xml">
            <form string="Budget">
                <style>
                    button.pr_po_icon > img {
                        width:25px;
                    }
                </style>
                <header>
                    <button name="action_request_for_approval" string="Request For Approval" type="object"
                        class="oe_highlight" attrs="{'invisible': ['|', '|',('is_allowed_to_approval_matrix', '=', False), ('state', '!=', 'draft'), ('approval_matrix', '=', False)]}"/>
                    <button name="action_approve" string="Approve" type="object" class="oe_highlight"
                            attrs="{'invisible': ['|', '|', ('is_allowed_to_approval_matrix', '=', False), ('state', '!=', 'to_approve'), ('is_approve_button', '=', False)]}" />
                    <button name="action_reject" string="Reject" type="object" class="oe_highlight"
                            attrs="{'invisible': ['|', '|', ('is_allowed_to_approval_matrix', '=', False), ('state', '!=', 'to_approve'), ('is_approve_button', '=', False)]}"/>
                    <button string="Confirm" name="action_budget_confirm" type="object"
                            class="oe_highlight" attrs="{'invisible': ['|',('state', '!=', 'draft'), '&amp;', ('is_allowed_to_approval_matrix', '=', True), ('approval_matrix', '!=', False)]}"/>
                    <button string="Validate" name="action_budget_validate" type="object"
                            class="oe_highlight" attrs="{'invisible': [('state', '!=', 'confirm')]}"/>
                    <button string="Undone" name="action_budget_undone" type="object"
                            class="oe_highlight" invisible="1"/>
                    <button string="Done" name="action_budget_done" type="object"
                            class="oe_highlight" confirm="Are you sure? Purchase Budget can not be used if status Done and Child Budget linked to this Purchase Budget will automatically Done." attrs="{'invisible': ['|',('is_parent_budget','=',False),('state1','!=','validate')]}" />
                    <button string="Done" name="action_budget_done" type="object"
                            class="oe_highlight" confirm="Are you sure? Purchase Budget can not be used if status Done. Every monthly budget linked to this budget will automatically Done too." attrs="{'invisible': ['|',('is_parent_budget','=',True),('state1','!=','validate')]}"/>
                    <button string="Reset to Draft" name="action_budget_draft" states="cancel" type="object"/>
                    <button string="Cancel Budget" name="action_budget_cancel" type="object" confirm="Are you sure? There is child budget linked to this budget. Both budgets will be Canceled." attrs="{'invisible': ['|',('is_parent_budget','=',False),('state1','not in',['confirm','validate'])]}"/>
                    <button string="Cancel Budget" name="action_budget_cancel" type="object" attrs="{'invisible': ['|',('is_parent_budget','=',True),('state1','not in',['confirm','validate'])]}" confirm="Are you sure? Every monthly budget linked to this budget will be cancelled too." />
                    <button name="action_generate_monthly_budget" string="Generate Monthly Budget" type="object" class="oe_highlight" attrs="{'invisible': ['|','|',('is_parent_budget','=',True),('state1','!=','validate'),('total_monthly_budget','!=',0)]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,validate,done" 
                            attrs="{'invisible': [('is_allowed_to_approval_matrix', '=', True), ('approval_matrix', '!=', False)]}"/>
                    <field name="state1" widget="statusbar" statusbar_visible="draft,to_approve,validate,done" 
                            attrs="{'invisible': [
                            '|','|', 
                            ('is_allowed_to_approval_matrix', '=', False),
                            ('approval_matrix', '=', False),
                            ('state', '=', 'rejected')]}"/>
                    <field name="state2" widget="statusbar" statusbar_visible="draft,to_approve,rejected" 
                            attrs="{'invisible': [('state', '!=', 'rejected')]}"/>
                </header>
                <sheet string="Budget">
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_monthly_budget"
                                type="object"
                                class="oe_stat_button"
                                icon="o-hm-smart-construction-project-budget"
                                attrs="{'invisible': ['|',('state', 'in', ('draft')),('total_monthly_budget', '=', 0)]}">
                            <field name="total_monthly_budget" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" attrs="{'readonly':[('state','!=','draft')]}" placeholder="Purchase Budget Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="parent_id" string="Budget Account Reference" attrs="{'readonly':[('state','!=','draft')], 'invisible': [('is_parent_budget','=', True)]}" domain="[('state','=','validate'),('is_parent_budget','=',False)]"/>
                            <field name="is_parent_budget" attrs="{'readonly':[('state','!=','draft')], 'invisible': [('parent_id','!=',False)]}" />
                            <field name="parent_budget_id" attrs="{'readonly':[('state','!=','draft')]}" domain="[('is_parent_budget','=',True),('state1','=','validate')]" />
                            <field name="account_tag_ids" widget="many2many_tags" attrs="{'readonly':[('state','!=','draft')], 'required':[('is_parent_budget','!=', True)], 'invisible': [('is_parent_budget','=', True)]}" domain="account_tag_ids_domain"/>
                            <field name="account_tag_ids_domain" invisible="1"/>
                        </group>
                        <group>
                            <!-- <field name="branch_id" attrs="{'readonly':[('state','!=','draft')]}"/> -->
                            <field name="branch_id" attrs="{'readonly': [('state', '!=', 'draft')]}"  required="1" options="{'no_create': True, 'no_create_edit': True}"/>
                            <label for="date_from" string="Period"/>
                            <div>
                                <field name="date_from" class="oe_inline"
                                       attrs="{'readonly':[('state','!=','draft')]}"/>
                                       -
                                <field name="date_to" class="oe_inline" attrs="{'readonly':[('state','!=','draft')]}"
                                       nolabel="1"/>
                            </div>
                            <field name="currency_id" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="approval_matrix"
                                attrs="{'invisible': [('is_allowed_to_approval_matrix', '=', False)], 'required': [('is_allowed_to_approval_matrix', '=', True)]}"/>
                            <field name="is_allowed_to_approval_matrix" invisible="1"/>
                            <field name="is_approve_button" invisible="1"/>
                            <field name="purchase_lines_id" invisible="1"/>
                            <field name="purchase_line_subtotal" invisible="1"/>
                            <field name="date_today" invisible="1"/>
                            <field name="is_use_theoretical_achievement" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Budget Lines">
                            <field name="purchase_budget_line"
                                   context="{'default_date_from': date_from,'default_date_to': date_to, 'default_account_tag_ids': account_tag_ids}" colspan="4"
                                   nolabel="1" attrs="{'readonly':[('state','!=','draft')]}">
                                <tree string="Budget Lines"
                                      decoration-success="is_above_budget and planned_amount &gt; 0"
                                      decoration-danger="is_above_budget and planned_amount &lt; 0" editable="bottom">
                                    <field name="product_budget" attrs="{'column_invisible': [('parent.parent_id', '=', False)], 'readonly': ['|',('group_product_id', '!=', False),('product_id', '!=', False)]}" domain="product_budget_domain" force_save="1" />
                                    <field name="group_product_id" attrs="{'readonly': [('product_id', '!=', False)]}" domain="group_product_id_domain"/>
                                    <field name="product_id"  attrs="{'readonly': [('group_product_id', '!=', False)]}" domain="product_id_domain"/>
                                    <field name="group_product_id_domain" invisible="1"/>
                                    <field name="product_budget_domain" invisible="1"/>
                                    <field name="product_id_domain" invisible="1"/>
                                    <field name="account_tag_ids" widget="many2many_tags" domain="account_tag_ids_domain" attrs="{'required':[('parent.is_parent_budget','!=', True)], 'column_invisible': [('parent.is_parent_budget', '=', True)],}"/>
                                    <field name="account_tag_ids_domain" invisible="1"/>
                                    <field name="purchase_budget_id" invisible="1"/>
                                    <field name="parent_analytic_account_id" invisible="1"/>
                                    <field name="analytic_account_id" groups="analytic.group_analytic_accounting" invisible="1"/>
                                    <field name="date_from"/>
                                    <field name="date_to"/>
                                    <!-- <field name="paid_date" groups="base.group_no_one"/> -->
                                    <field name="currency_id" invisible="1"/>
                                    <field name="planned_amount" sum="Planned Amount"/>
                                    <field name="carry_over_amount" invisible="1"/>
                                    <field name="avail_amount"/>
                                    <field name="reserve_amount"/>
                                    <field name="practical_amount_temp" invisible="1"/>
                                    <field name="practical_amount" sum="Practical Amount"/>
                                    <field name="remaining_amount"/>
                                    <field name="theoritical_amount" sum="Theoretical Amount" attrs="{'column_invisible': [('parent.is_use_theoretical_achievement', '!=', True)]}"/>
                                    <field name="percentage" widget="percentage" attrs="{'column_invisible': [('parent.is_use_theoretical_achievement', '!=', True)]}"/>
                                    <button type="object" name="action_open_purchase_request_lines" class="pr_po_icon" icon="/equip3_accounting_budget/static/src/img/pr_icon.png" title="Purchase Request" />
                                    <button type="object" name="action_open_purchase_order_lines" class="pr_po_icon" icon="/equip3_accounting_budget/static/src/img/po_icon.png" title="Purchase Order" />
                                    <field name="is_above_budget" invisible="1"/>
                                </tree>
                                <form string="Budget Lines">
                                    <group>
                                        <group>
                                            <field name="currency_id" invisible="1"/>
                                            <field name="purchase_budget_id"/>
                                            <field name="planned_amount"/>
                                            <field name="analytic_account_id"
                                                   groups="analytic.group_analytic_accounting"/>
                                        </group>
                                        <group>
                                            <label for="date_from" string="Period"/>
                                            <div>
                                                <field name="date_from" class="oe_inline"/>
                                                -
                                                <field name="date_to" class="oe_inline"/>
                                            </div>
                                            <!-- <field name="paid_date" groups="base.group_no_one"/> -->
                                            <field name="company_id" options="{'no_create': True}"
                                                   groups="base.group_multi_company"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Budget History" name="budget_transfer">
                            <group string="Budget Carry In">
                                <field name="budget_purchase_carry_in_line_ids" nolabel="1">
                                    <tree create="0" edit="0" delete="0">
                                        <field name="budget_carry_over_name"/>
                                        <field name="budget_purchase_id"/>
                                        <field name="group_product_id"/>
                                        <field name="product_budget"/>
                                        <field name="product_id"/>
                                        <field name="planned_amount" widget="monetary" options="{'currency_field': 'currency_id'}" sum="Total Planned"/>
                                        <field name="carry_over_amount" widget="monetary" options="{'currency_field': 'currency_id'}" sum="Total Carry Over"/>
                                        <field name="final_planned_amount" widget="monetary" options="{'currency_field': 'currency_id'}" sum="Total Final"/>
                                        <field name="currency_id" invisible="1"/>
                                    </tree>
                                </field>
                            </group>
                            <group string="Budget Carry Out" attrs="{'invisible': [('state','!=','done')]}">
                                <field name="budget_purchase_carry_out_line_ids" nolabel="1">
                                    <tree create="0" edit="0" delete="0">
                                        <field name="budget_purchase_carry_over_id" string="New Purchase Budget Name"/>
                                        <field name="group_product_id"/>
                                        <field name="product_budget"/>
                                        <field name="product_id"/>
                                        <field name="new_budget_purchase_line_account_tag_ids" widget="many2many_tags"/>
                                        <field name="new_budget_purchase_line_date_from" />
                                        <field name="new_budget_purchase_line_date_to" />
                                        <field name="carry_over_amount" widget="monetary" options="{'currency_field': 'currency_id'}" sum="Total Carry Over" />
                                        <field name="new_budget_purchase_id_state" widget="badge" string="State" />
                                        <field name="currency_id" invisible="1"/>
                                    </tree>
                                </field>
                            </group>

                
                        </page>
                        <page string="Child Budget" attrs="{'invisible': [('is_parent_budget', '=', False)]}">
                            <field name="child_budget_ids" nolabel="1">
                                <tree string="Child Budget" create="0" edit="0" delete="0">
                                    <field name="name" />
                                    <field name="date_from"/>
                                    <field name="date_to"/>
                                    <field name="company_id" groups="base.group_multi_company"/>
                                    <field name="branch_id"/>
                                    <field name="total_planned_amount" sum="Total Planned"/>
                                    <field name="total_practical_amount" sum="Total Used"/>
                                    <field name="total_remaining_amount" sum="Total Remaining"/>
                                    <field name="state" optional="show" widget="badge" decoration-success="state == 'done'" decoration-primary="state =='confirm'" decoration-success2="state == 'validate'" decoration-muted="state == 'draft'" decoration-danger3="state == 'cancel'" decoration-danger="state == 'rejected'" decoration-warning3="state == 'to_approve'"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Approval Matrix Line" name="approved_matrix_ids" attrs="{'invisible': ['|', ('approval_matrix', '=', False), ('is_allowed_to_approval_matrix', '=', False)]}">
                            <field name="approved_matrix_ids" context="{'approved_matrix_ids': approved_matrix_ids}"
                                   force_save="1">
                                <tree create="0" edit="0" delete="0">
                                    <field name="sequence"/>
                                    <field name="user_ids" widget="many2many_tags"/>
                                    <field name="minimum_approver"/>
                                    <field name="state_char"/>
                                    <field name="time_stamp" invisible="1"/>
                                    <field name="feedback"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="purchase_budget_view_tree">
        <field name="name">budget.purchase.view.tree</field>
        <field name="model">budget.purchase</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" decoration-muted="state in ('done','cancel')" string="Budget">
                <field name="complete_name" colspan="1" string="Purchase Budget Name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                <field name="branch_id"/>
                <field name="total_planned_amount"/>
                <field name="total_practical_amount"/>
                <field name="total_remaining_amount"/>
                <field name="parent_id"/>
                <field name="state" optional="show" widget="badge" decoration-success="state == 'done'" decoration-primary="state =='confirm'" decoration-success2="state == 'validate'" decoration-muted="state == 'draft'" decoration-danger3="state == 'cancel'" decoration-danger="state == 'rejected'" decoration-warning3="state == 'to_approve'"/>
            </tree>
        </field>
    </record>

    <record id="view_purchase_budget_kanban" model="ir.ui.view">
        <field name="name">budget.purchase.kanban</field>
        <field name="model">budget.purchase</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="parent_id"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="row mb4">
                                <div class="col-8">
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <div class="col-4">
                                    <span class="float-right">
                                        <field name="state" widget="kanban_label_selection"
                                               options="{'classes': {'draft': 'default', 'done': 'success'}}"/>
                                    </span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-10">
                                    <i class="fa fa-clock-o" role="img" aria-label="Period" title="Period"/>
                                    <t t-esc="record.date_from.value"/>-
                                    <t t-esc="record.date_to.value"/>
                                </div>
<!--                                <div class="col-2">-->
<!--                                    <span class="float-right">-->
<!--                                        <img t-att-src="kanban_image('res.users', 'image_small', record.user_id.raw_value)"-->
<!--                                             t-att-title="record.user_id.value" t-att-alt="record.user_id.value"-->
<!--                                             width="24" height="24"-->
<!--                                             class="oe_kanban_avatar float-right"/>-->
<!--                                    </span>-->
<!--                                </div>-->
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_purchase_budget_search" model="ir.ui.view">
        <field name="name">budget.purchase.search</field>
        <field name="model">budget.purchase</field>
        <field name="arch" type="xml">
            <search string="Budget">
                <field name="name" filter_domain="[('name','ilike',self)]" string="Budget"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]" help="Draft Budgets"/>
                <filter string="To Approve" name="toapprove" domain="[('state','=','confirm')]"
                        help="To Approve Budgets"/>
                <field name="state"/>
            </search>
        </field>
    </record>

    <record id="view_purchase_budget_line_search" model="ir.ui.view">
        <field name="name">account.budget.line.search</field>
        <field name="model">budget.purchase.lines</field>
        <field name="arch" type="xml">
            <search string="Budget Lines">
                <field name="analytic_account_id"/>
                <field name="purchase_budget_id"/>
                <filter name="filter_not_cancelled" string="Not Cancelled"
                        domain="[('purchase_budget_state','!=','cancel')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_crossevered_budgdet_id" string="Budgets" domain="[]"
                            context="{'group_by':'purchase_budget_id'}"/>
                </group>
            </search>

        </field>
    </record>

    <record model="ir.ui.view" id="view_purchase_budget_line_tree">
        <field name="name">budget.purchase.line.tree</field>
        <field name="model">budget.purchase.lines</field>
        <field name="arch" type="xml">
            <tree string="Budget Lines" create="0">
                <field name="currency_id" invisible="1"/>
                <field name="purchase_budget_id" invisible="1"/>
                <field name="purchase_order_line_budget_id" invisible="1"/>
                <field name="purchase_budget_id"/>
                <field name="analytic_account_id" groups="analytic.group_analytic_accounting"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="paid_date" groups="base.group_no_one"/>
                <field name="planned_amount"/>
                <field name="practical_amount_temp" invisible="1"/>
                <field name="practical_amount"/>
                <field name="theoritical_amount"/>
                <field name="percentage" widget="percentage"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="view_purchase_budget_line_form">
        <field name="name">budget.purchase.line.form</field>
        <field name="model">budget.purchase.lines</field>
        <field name="arch" type="xml">
            <form string="Budget Lines">
                <sheet>
                    <group col="4">
                        <field name="currency_id" invisible="1"/>
                        <field name="purchase_budget_state" invisible="1"/>
                        <field name="purchase_order_line_budget_id" invisible="1"/>
                        <field name="practical_amount_temp" invisible="1"/>
                        <field name="purchase_budget_id" attrs="{'readonly':[('purchase_budget_state','!=','draft')]}"/>
                        <field name="account_tag_ids"
                               attrs="{'readonly':[('purchase_budget_state','!=','draft')]}" widget="many2many_tags"/>
                        <field name="purchase_budget_id" attrs="{'readonly':[('purchase_budget_state','!=','draft')]}"/>
                        <field name="date_from" attrs="{'readonly':[('purchase_budget_state','!=','draft')]}"/>
                        <field name="date_to" attrs="{'readonly':[('purchase_budget_state','!=','draft')]}"/>
                        <field name="paid_date" attrs="{'readonly':[('purchase_budget_state','!=','draft')]}"/>
                        <field name="planned_amount" attrs="{'readonly':[('purchase_budget_state','!=','draft')]}"/>
                        <field name="practical_amount" attrs="{'readonly':[('purchase_budget_state','!=','draft')]}"/>
                        <field name="theoritical_amount" attrs="{'readonly':[('purchase_budget_state','!=','draft')]}"/>
                        <field name="percentage" widget="percentage"
                               attrs="{'readonly':[('purchase_budget_state','!=','draft')]}"/>
                        <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"
                               attrs="{'readonly':[('purchase_budget_state','!=','draft')]}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_purchase_budget_line_pivot">
        <field name="name">budget.purchase.line.pivot</field>
        <field name="model">budget.purchase.lines</field>
        <field name="arch" type="xml">
            <pivot string="Budget Lines">
                <field name="purchase_budget_id" type="row"/>
                <field name="planned_amount" type="measure" string="Planned amount"/>
                <field name="theoritical_amount" type="measure" string="Theoritical amount"/>
                <field name="practical_amount" type="measure" string="Practical amount"/>
                <field name="percentage" type="measure" widget="percentage"/>
            </pivot>
        </field>
    </record>

    <record model="ir.ui.view" id="view_purchase_budget_line_graph">
        <field name="name">budget.purchase.line.graph</field>
        <field name="model">budget.purchase.lines</field>
        <field name="arch" type="xml">
            <graph string="Budget Lines">
                <field name="purchase_budget_id" type="row"/>
                <field name="planned_amount" type="measure" string="Planned amount"/>
                <field name="theoritical_amount" type="measure" string="Theoritical amount"/>
                <field name="practical_amount" type="measure" string="Practical amount"/>
            </graph>
        </field>
    </record>

    <record model="ir.actions.act_window" id="act_purchase_budget_lines_view">
        <field name="name">Budgets Analysis</field>
        <field name="res_model">budget.purchase.lines</field>
        <field name="view_mode">tree,form,pivot,graph</field>
        <field name="view_id" eval="False"/>
        <field name="context">{'search_default_group_crossevered_budgdet_id': True,
            'search_default_filter_not_cancelled':True}
        </field>
    </record>

    <record id="act_account_analytic_account_cb_lines" model="ir.actions.act_window">
        <field name="name">Budget Items</field>
        <field name="res_model">budget.purchase.lines</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_analytic_account_id': [active_id], 'default_analytic_account_id':
            active_id}
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_account_purchase_budget_view">
        <field name="name">Purchase Budgets</field>
        <field name="res_model">budget.purchase</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to create a new budget.
            </p>
            <p>
                Use budgets to compare actual with expected revenues and costs
            </p>
        </field>
    </record>

    
    




    <record model="ir.actions.act_window" id="act_purchase_budget_lines_view">
