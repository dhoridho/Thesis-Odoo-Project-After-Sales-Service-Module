<odoo>
    <record model="ir.ui.view" id="budget_change_req_view_form">
        <field name="name">budget.change.req.view.form</field>
        <field name="model">budget.change.req</field>
        <field name="arch" type="xml">
            <form string="Budget Change Request">
                <header>
                    <button name="action_confirm" string="Confirm" type="object"
                            class="oe_highlight"
                            attrs="{'invisible': ['|',('is_allowed_to_approval_matrix', '=', True), ('state', '!=', 'draft')]}"
                    />
                    <button name="action_request_for_approval" string="Request For Approval" type="object"
                            class="oe_highlight"
                            attrs="{'invisible': ['|',('is_allowed_to_approval_matrix', '=', False), ('state', '!=', 'draft')]}"
                    />
                    <button name="action_approve" string="Approve" type="object" class="oe_highlight"
                            attrs="{'invisible': ['|', '|', ('is_allowed_to_approval_matrix', '=', False), ('is_approve_button', '=', False), ('state', '!=', 'to_approve')]}"/>
                    <button name="action_reject" string="Reject" type="object" class="oe_highlight"
                            attrs="{'invisible': ['|', '|', ('is_allowed_to_approval_matrix', '=', False), ('is_approve_button', '=', False), ('state', '!=', 'to_approve')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,to_approve,confirm"
                        attrs="{'invisible': ['|', ('is_allowed_to_approval_matrix', '=', False), ('state', '=', 'rejected')]}"/>
                    <field name="state1" widget="statusbar" statusbar_visible="draft,to_approve,rejected" 
                        attrs="{'invisible': [
                        '|', ('is_allowed_to_approval_matrix', '=', False),
                        ('state', '!=', 'rejected')]}"/>
                    <field name="state2" widget="statusbar" statusbar_visible="draft,confirm" 
                            attrs="{'invisible': [
                            ('is_allowed_to_approval_matrix', '=', True)]}"/>
                </header>
                <sheet string="Budget Change Request">
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="requested_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="budget_std_id" attrs="{'readonly' : [('state', '!=', 'draft')]}"/>
                            <field name="is_parent_budget" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="parent_id" attrs="{'readonly':[('state','!=','draft')]}" domain="[('is_parent_budget','=',True),('state1','=','validate')]"/>
                            <field name="account_tag_ids" widget="many2many_tags" attrs="{'invisible': [('is_parent_budget', '!=', False)], 'readonly':[('state','!=','draft')], 'required':[('is_parent_budget','!=', True)]}"/>
                        </group>
                        <group>
                            <field name="date" attrs="{'readonly' : [('state', '!=', 'draft')]}"/>
                            <label for="date_from" string="Period"/>
                            <div>
                                <field name="date_from" class="oe_inline" attrs="{'readonly':[('state','!=','draft')]}" required="1"/>
                                -
                                <field name="date_to" class="oe_inline" attrs="{'readonly':[('state','!=','draft')]}" nolabel="1" required="1"/>
                            </div>
                            <field name="branch_id" attrs="{'readonly': [('state', '!=', 'draft')]}"  required="1" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="company_id" readonly="1" force_save="1"/>
                            <field name="approval_matrix"
                                   attrs="{'invisible': [('is_allowed_to_approval_matrix', '=', False)], 'required': [('is_allowed_to_approval_matrix', '=', True)]}"/>
                            <!-- <field name="branch_id" attrs="{'readonly' : [('state', '!=', 'draft')]}"/> -->
                            <field name="is_allowed_to_approval_matrix" invisible="1"/>
                            <field name="is_approve_button" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Budget Lines">
                            <field name="budget_line" colspan="3" attrs="{'readonly' : [('state', '!=', 'draft')]}" context="{'default_date_from': date_from,'default_date_to': date_to, 'default_account_tag_ids': account_tag_ids}">
                                <tree string="Budget Lines" editable="bottom">
                                    <field name="budgetary_position_id"/>
                                    <field name="account_tag_ids" widget="many2many_tags" domain="[('id', 'in', parent.account_tag_ids)]" attrs="{'column_invisible': [('parent.is_parent_budget', '!=', False)]}" required="1"/>
                                    <field name="date_from" required="1"/>
                                    <field name="date_to" required="1"/>
                                    <field name="planned_amount" readonly="1" force_save="1"/>
                                    <field name="new_amount"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Approval Matrix Line" name="approved_matrix_ids" attrs="{'invisible': ['|', ('approval_matrix', '=', False), ('is_allowed_to_approval_matrix', '=', False)]}">
                            <field name="approved_matrix_ids" context="{'approved_matrix_ids': approved_matrix_ids}"
                                   force_save="1">
                                <tree create="0" edit="0" delete="0">
                                    <field name="sequence"/>
                                    <field name="user_ids" widget="many2many_tags"/>
                                    <field name="minimum_approver"/>
                                    <field name="state_char"/>
                                    <field name="time_stamp" invisible="1"/>
                                    <field name="feedback"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="budget_change_req_view_tree">
        <field name="name">budget.change.req.view.tree</field>
        <field name="model">budget.change.req</field>
        <field name="arch" type="xml">
            <tree string="Budget Change Request">
                <field name="name" />
                <field name="date"/>
                <field name="budget_std_id"/>
                <field name="requested_id"/>
                <field name="state" widget="badge" decoration-success="state in ('done', 'confirm')" decoration-success2="state == 'validate'" decoration-muted="state == 'draft'" decoration-danger3="state == 'cancel'" decoration-danger="state == 'rejected'" decoration-warning3="state == 'to_approve'"/>
            </tree>
        </field>
    </record>


confirm
done

    <record model="ir.actions.act_window" id="act_budget_change_req_view">
        <field name="name">Budget Change Request</field>
        <field name="res_model">budget.change.req</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="budget_change_req_view_tree"/>
    </record>
</odoo>