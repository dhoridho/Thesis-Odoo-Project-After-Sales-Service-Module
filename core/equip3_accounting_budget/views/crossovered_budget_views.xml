                <field name="reserve_amount_2" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="pr_reserved_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="practical_budget_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="purchased_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
