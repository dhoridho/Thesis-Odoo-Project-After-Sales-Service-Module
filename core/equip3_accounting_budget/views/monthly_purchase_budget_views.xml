<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_form_monthly_purchase_budget" model="ir.ui.view">
        <field name="name">monthly.purchase.budget.form</field>
        <field name="model">monthly.purchase.budget</field>
        <field name="arch" type="xml">
            <form string="Monthly Purchase Budget" create="0">
                <style>
                    button.pr_po_icon > img {
                        width:25px;
                    }
                </style>
                <header>
                    <button name="action_request_for_approval" string="Request For Approval" type="object" class="oe_highlight" attrs="{'invisible': ['|', '|',('is_allowed_to_approval_matrix', '=', False), ('state', '!=', 'draft'), ('approval_matrix', '=', False)]}"/>
                    <button name="action_approve" string="Approve" type="object" class="oe_highlight" attrs="{'invisible': ['|', '|', ('is_allowed_to_approval_matrix', '=', False), ('state', '!=', 'to_approve'), ('is_approve_button', '=', False)]}" />
                    <button name="action_reject" string="Reject" type="object" class="oe_highlight" attrs="{'invisible': ['|', '|', ('is_allowed_to_approval_matrix', '=', False), ('state', '!=', 'to_approve'), ('is_approve_button', '=', False)]}"/>
                    <button string="Confirm" name="action_budget_confirm" type="object" class="oe_highlight" attrs="{'invisible': ['|',('state', '!=', 'draft'), '&amp;', ('is_allowed_to_approval_matrix', '=', True), ('approval_matrix', '!=', False)]}"/>
                    <button string="Validate" name="action_budget_validate" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'confirm')]}"/>
                    <button string="Done" name="action_confirm_budget_done" type="object" class="oe_highlight" attrs="{'invisible': [('state','!=','validate')]}"/>
                    <button string="Reset to Draft" name="action_budget_draft" states="cancel" type="object"/>
                    <button string="Cancel Budget" name="action_budget_cancel" type="object" attrs="{'invisible': [('state','not in',['confirm','validate'])]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,validate,done"/>
                </header>
                <sheet string="Monthly Purchase Budget">
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" readonly="1" placeholder="Number"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="budget_purchase_id" domain="[('state','=','validate'),('is_parent_budget','=',False)]" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="account_tag_ids" widget="many2many_tags" domain="account_tag_ids_domain" attrs="{'readonly':[('state','!=','draft')]}" required="1" />
                            <field name="account_tag_ids_domain" invisible="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="month_period_id" options="{'no_create': True, 'no_edit': True}" domain="month_period_id_domain" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="month_period_id_domain" invisible="1"/>
                            <field name="total_planned_amount" />
                            <field name="total_avail_amount" />
                        </group>
                        <group>
                            <field name="company_id" />
                            <field name="branch_id" />
                            <field name="approval_matrix" invisible="1" />
                            <field name="is_allowed_to_approval_matrix" invisible="1"/>
                            <field name="is_approve_button" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Budget Lines" name="monthly_purchase_budget_line_ids">
                            <field name="monthly_purchase_budget_line_ids" attrs="{'readonly':[('state','!=','draft')]}" context="{'default_account_tag_ids': account_tag_ids}">
                                <tree editable="bottom">
                                    <field name="group_product_id" attrs="{'readonly': [('product_id', '!=', False)]}" domain="group_product_id_domain"/>
                                    <field name="product_id"  attrs="{'readonly': [('group_product_id', '!=', False)]}" domain="product_id_domain"/>
                                    <field name="group_product_id_domain" invisible="1"/>
                                    <field name="product_id_domain" invisible="1"/>
                                    <field name="account_tag_ids" widget="many2many_tags" domain="account_tag_ids_domain" required="1"/>
                                    <field name="account_tag_ids_domain" invisible="1"/>
                                    <field name="planned_amount" sum="Planned Amount" widget="monetary"/>
                                    <field name="avail_amount" widget="monetary"/>
                                    <!-- <field name="auto_carry_next_period" widget="monetary"/> -->
                                    <field name="reserve_amount" widget="monetary"/>
                                    <field name="practical_amount" widget="monetary"/>
                                    <field name="remaining_amount" sum="Remaining Amount" widget="monetary"/>
                                    <button type="object" name="action_open_purchase_request_lines" class="pr_po_icon" icon="/equip3_accounting_budget/static/src/img/pr_icon.png" title="Purchase Request"/>
                                    <button type="object" name="action_open_purchase_order_lines" class="pr_po_icon" icon="/equip3_accounting_budget/static/src/img/po_icon.png" title="Purchase Order"/>
                                    <field name="currency_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Budget History" name="budget_transfer">
                            <group string="Budget Lines Carry In">
                                <field name="monthly_purchase_budget_line_carry_in_ids" domain="[('carry_in_amount','&gt;',0)]" nolabel="1">
                                    <tree create="0" edit="0" delete="0">
                                        <field name="group_product_id"/>
                                        <field name="product_id"/>
                                        <field name="month_period_id"/>
                                        <field name="month_period_origin_id"/>
                                        <field name="account_tag_ids" widget="many2many_tags"/>
                                        <field name="planned_amount" sum="Planned Amount"/>
                                        <field name="carry_in_amount" sum="Carry In Amount"/>
                                        <field name="currency_id" invisible="1"/>
                                    </tree>
                                </field>
                            </group>

                            <group string="Budget Lines Carry Out">
                                <field name="monthly_purchase_budget_line_carry_out_ids" domain="[('carry_out_amount','&lt;',0)]" nolabel="1">
                                    <tree create="0" edit="0" delete="0">
                                        <field name="group_product_id"/>
                                        <field name="product_id"/>
                                        <field name="month_period_id"/>
                                        <field name="month_period_source_id"/>
                                        <field name="account_tag_ids" widget="many2many_tags"/>
                                        <field name="planned_amount" sum="Planned Amount"/>
                                        <field name="carry_out_amount" sum="Carry In Amount"/>
                                        <field name="currency_id" invisible="1"/>
                                    </tree>
                                </field>
                            </group>
                            
                        </page>
                        <page string="Approval Matrix Line" name="approved_matrix_ids" attrs="{'invisible': ['|', ('approval_matrix', '=', False), ('is_allowed_to_approval_matrix', '=', False)]}">
                            <field name="approved_matrix_ids" context="{'approved_matrix_ids': approved_matrix_ids}" force_save="1">
                                <tree create="0" edit="0" delete="0">
                                    <field name="sequence"/>
                                    <field name="user_ids" widget="many2many_tags"/>
                                    <field name="minimum_approver"/>
                                    <field name="state_char"/>
                                    <field name="time_stamp" invisible="1"/>
                                    <field name="feedback"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_tree_monthly_purchase_budget" model="ir.ui.view">
        <field name="name">monthly.purchase.budget.tree</field>
        <field name="model">monthly.purchase.budget</field>
        <field name="arch" type="xml">
            <tree string="Monthly Purchase Budget" create="0">
                <field name="budget_purchase_id"/>
                <field name="month_period_id"/>
                <field name="company_id"/>
                <field name="branch_id"/>
                <field name="total_line_planned_amount" widget="monetary" />
                <field name="total_line_practical_amount" widget="monetary" />
                <field name="total_line_remaining_amount" widget="monetary" />
                <field name="state" widget="badge" decoration-success="state == 'done'" decoration-success2="state == 'validate'" decoration-muted="state == 'draft'"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="action_monthly_purchase_budget" model="ir.actions.act_window">
        <field name="name">Monthly Purchase Budget</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">monthly.purchase.budget</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'group_by': 'budget_purchase_id'}</field>
    </record>

</odoo>