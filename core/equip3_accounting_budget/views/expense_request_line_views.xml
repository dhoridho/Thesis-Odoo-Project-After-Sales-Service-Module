<odoo>   
    <record id="expense_request_warning_form" model="ir.ui.view">
        <field name="name">expense.request.warning.form</field>
        <field name="model">expense.request.warning</field>
        <field name="arch" type="xml">
        <form string="Expense Request Waning">
            <group>
                <p>The product you inserted is bigger than your budget. Do you want to proceed?</p>
                <inline/>
                <field name="warning_line_ids" nolabel="1" readonly="1">
                    <tree>
                        <!-- <field name="product_id"/> -->
                        <field name="budgetary_position_id" string="Budgetary Position"/>
                        <field name="account_id"/>
                        <field name="planned_budget" align="center"/>
                        <field name="expense_budget" align="center"/>
                        <field name="realized_amount" align="center" string="Budget To Reserve"/>
                    </tree>
                </field>
                    
            </group>
	    <footer>
	        <button string='Continue' name='confirm_expense_request' type='object' class='btn-primary'/>
            <button string='Cancel' class='btn-default' special="cancel"/>
	    </footer>
        </form>
        </field>
    </record>
    
    <record id="action_expense_request_warning" model="ir.actions.act_window">
        <field name="name">Expense Warning</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">expense.request.warning</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="expense_request_warning_form" />
    </record>
    

 
</odoo>