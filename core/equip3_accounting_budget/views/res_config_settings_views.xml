<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_accounting_masterdata_inherit" model="ir.ui.view">
        <field name="name">res_config_settings_view_accounting_masterdata_inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="equip3_accounting_masterdata.res_config_settings_view_form_accessright_setting_inherit" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='equp3_accounting_masterdata_om_account_budget']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" 
                     id="equip3_accounting_budget_extend" 
                     attrs="{'invisible': [('group_om_account_budget', '!=', True)]}">
                    
                    <div class="o_setting_left_pane">
                        <field name="accounting_budget_use_theoretical_achievement"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <!-- <label for="accounting_budget_use_theoretical_achievement"/> -->
                        <span class="o_form_label">Use Theoretical Amount and Achievement</span>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="res_config_settings_view_purchase_accessright_inherit" model="ir.ui.view">
        <field name="name">res_config_settings_view_purchase_accessright_inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="equip3_purchase_accessright_setting.res_config_settings_view_form_inherit" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='vendor_approval_div']" position="before">
                <div class="col-12 col-lg-6 o_setting_box"
                    id="implementor_allow_purchase_budget" modifiers="{}">
                    <div class="o_setting_left_pane " modifiers="{}">
                        <field name="is_allow_purchase_budget" modifiers="{}" id="is_allow_purchase_budget" />
                    </div>
                    <div class="o_setting_right_pane" modifiers="{}">
                        <label string="Allow Purchase Budget" for="is_allow_purchase_budget"
                            modifiers="{}" />
                    </div>
                </div>
                <div class="row mt16 o_settings_container" attrs="{'invisible':[('is_allow_purchase_budget','=',False)]}" modifiers="{'invisible':[['is_allow_purchase_budget','=',false]]}">
                    <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible':[('purchase','=',False)]}">
                        <div class="o_setting_left_pane">
                            <field name="is_purchase_request_overbudget_approval_matrix"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_purchase_request_overbudget_approval_matrix"/>
                            <div class="text-muted">
                                Set The Purchase Request Overbudget Approval Matrix.
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible':[('purchase','=',False)]}">
                        <div class="o_setting_left_pane">
                            <field name="is_purchase_order_overbudget_approval_matrix"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_purchase_order_overbudget_approval_matrix"/>
                            <div class="text-muted">
                                Set The Purchase Order Overbudget Approval Matrix.
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

