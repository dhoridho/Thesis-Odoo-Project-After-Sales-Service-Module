<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="budget_purchase_carry_over_view_form">
        <field name="name">budget.purchase.carry.over.view.form</field>
        <field name="model">budget.purchase.carry.over</field>
        <field name="arch" type="xml">
            <form string="Budget">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" attrs="{'invisible':[('state','=','confirm')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Purchase Budget Name" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="budget_purchase_id" domain="[('state','=','done'),('total_remaining_amount','>',0)]" required="1" attrs="{'readonly': [('state','!=','draft')]}"/>
                            <field name="parent_id" readonly="1" force_save="1"/>
                            <field name="is_parent_budget" attrs="{'readonly': [('state','!=','draft')]}"/>
                            <field name="parent_budget_id" attrs="{'readonly': [('state','!=','draft')]}"/>
                            <field name="account_tag_ids" widget="many2many_tags" attrs="{'readonly':[('state','!=','draft')], 'required':[('is_parent_budget','=',False)]}"/>
                        </group>
                        <group>
                            <label for="date_from" string="Period"/>
                            <div>
                                <field name="date_from" class="oe_inline" attrs="{'readonly': [('state','!=','draft')]}" required="1"/>
                                -
                                <field name="date_to" class="oe_inline" attrs="{'readonly': [('state','!=','draft')]}" nolabel="1" required="1"/>
                            </div>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}" readonly="1" force_save="1"/>
                            <field name="branch_id" options="{'no_create': True}" attrs="{'readonly': [('state','!=','draft')]}" required="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Budget Lines">
                            <field name="budget_purchase_carry_over_line_ids" context="{'default_date_from': date_from, 'default_date_to': date_to, 'default_account_tag_ids': account_tag_ids}" nolabel="1" attrs="{'readonly': [('state','!=','draft')]}">
                                <tree string="Budget Lines" editable="bottom">
                                    <field name="product_budget" attrs="{'column_invisible': [('parent.parent_id', '=', False)], 'readonly': ['|',('group_product_id', '!=', False),('product_id', '!=', False)]}" domain="product_budget_domain" force_save="1" />
                                    <field name="group_product_id" attrs="{'readonly': [('product_id', '!=', False)]}" domain="group_product_id_domain"/>
                                    <field name="product_id"  attrs="{'readonly': [('group_product_id', '!=', False)]}" domain="product_id_domain"/>
                                    <field name="group_product_id_domain" invisible="1"/>
                                    <field name="product_budget_domain" invisible="1"/>
                                    <field name="product_id_domain" invisible="1"/>
                                    <field name="account_tag_ids" attrs="{'required':[('is_parent_budget','=',False)]}" widget="many2many_tags" domain="account_tag_ids_domain"/>
                                    <field name="account_tag_ids_domain" invisible="1"/>
                                    <field name="is_parent_budget" invisible="1"/>
                                    <field name="date_from" required="1"/>
                                    <field name="date_to" required="1"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="planned_amount" sum="Planned Amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="carry_over_amount" sum="Carry Amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="final_planned_amount" sum="Final Amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="remaining_amount" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="budget_purchase_carry_over_view_tree">
        <field name="name">budget.purchase.carry.over.view.tree</field>
        <field name="model">budget.purchase.carry.over</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="company_id"/>
                <field name="branch_id"/>
                <field name="total_planned_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="total_carry_over_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="total_final_planned_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="currency_id" invisible="1"/>
                <field name="state" widget="badge" decoration-info ="state == 'draft'" decoration-success="state == 'confirm'"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_budget_purchase_carry_over">
        <field name="name">Carry Over Purchase Budget</field>
        <field name="res_model">budget.purchase.carry.over</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to create a new Carry Over Purchase Budget.
            </p>
            <p>
                Use budgets to compare actual with expected revenues and costs
            </p>
        </field>
    </record>
</odoo>