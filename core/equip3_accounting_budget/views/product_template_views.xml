<odoo>
    <data>
        <!-- Inherit the existing product template form view -->
        <record id="inherit_product_template_form_add_group_id" model="ir.ui.view">
            <field name="name">product.template.form.add.group.id</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <!-- Use xpath to locate the position after use_on_petty_cash field -->
                <!-- <xpath expr="//field[@name='use_on_petty_cash']" position="after">
                    <field name="group_product"/>
                </xpath> -->
                <xpath expr="//page[@name='invoicing']/group[1]" position="before">
                    <group>
                        <group>
                            <field name="group_product"/>
                        </group>
                    </group>
                </xpath> 
                <xpath expr="//notebook" position="inside">
                    <field name="is_allow_purchase_budget" invisible="1"/>
                    <page string="Budget" name="budget" attrs="{'invisible': [('is_allow_purchase_budget','=',False)]}">
                        <group>
                            <field name="is_use_purchase_budget"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>