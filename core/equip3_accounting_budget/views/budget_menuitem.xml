<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Top menu item -->
    <menuitem name="Budget"
        id="headmenu_budget"
        groups="account.group_account_readonly,account.group_account_invoice"
        web_icon="account,static/description/icon.png">
        <menuitem id="menu_budget" name="Budget" sequence="1">
            <menuitem id="om_account_budget.menu_act_crossovered_budget_view" name="Budgets" action="om_account_budget.act_crossovered_budget_view" sequence="2"/>
            <menuitem id="menu_carryover_budget_account" name="Carry Over Budget" action="equip3_accounting_budget.act_carryover_budget_view" sequence="3"/>
            <menuitem id="crossovered_budget_transfer_menu" name="Budget Transfer" action="equip3_accounting_budget.action_crossovered_budget_transfer" sequence="3"/>
            <menuitem id="menu_monthly_account_budget" name="Monthly Account Budget" action="equip3_accounting_budget.action_monthly_account_budget" sequence="7"/>
            <menuitem id="menu_act_budget_change_req_view" name="Budget Change Request" action="equip3_accounting_budget.act_budget_change_req_view" sequence="4"/>
            <menuitem action="om_account_budget.open_budget_post_form" id="om_account_budget.menu_budget_post_form" sequence="1"/>
        </menuitem>
        <menuitem id="menu_purchase_budget" name="Purchase Budget" sequence="2">
            <menuitem id="menu_purchase_budget_account" name="Purchase Budgets" action="equip3_accounting_budget.action_account_purchase_budget_view" sequence="5"/>
            <menuitem id="menu_budget_purchase_carry_over" name="Carry Over Purchase Budget" action="equip3_accounting_budget.action_budget_purchase_carry_over" sequence="5"/>
            <menuitem id="menu_purchase_change_request" name="Purchase Budget Change Request" action="equip3_accounting_budget.action_account_purchase_change_request" sequence="6"/>
            <menuitem id="monthly_purchase_budget_menu" name="Monthly Purchase Budget" action="equip3_accounting_budget.action_monthly_purchase_budget" sequence="7"/>
        </menuitem>
        <menuitem id="menu_budget_report" name="Reporting" sequence="20">
            <menuitem id="menu_budget_analysis" name="Budget Analysis" action="om_account_budget.act_crossovered_budget_lines_view" sequence="1"/>
            <menuitem id="menu_purchase_budget_analysis" name="Purchase Budget Analysis" action="act_purchase_budget_lines_view" sequence="2"/>
            <menuitem id="menu_purchase_budget_report" name="Purchase Budget Report" action="action_purchase_budget_report" sequence="3"/>
        </menuitem>
        <menuitem id="menu_budget_configuration" name="Configuration" sequence="25">
            <!-- <menuitem action="equip3_accounting_budget.open_account_product_group_form" id="equip3_accounting_budget.menu_account_product_group_form" sequence="1"/> -->
            <!-- <menuitem action="open_account_product_group_form" id="menu_account_product_group_form" sequence="1"/> -->
            <menuitem action="om_account_budget.open_budget_post_form" id="om_account_budget.menu_budget_post_form" sequence="2"/>
        </menuitem>
    </menuitem>

    <menuitem id="menu_head_budget_approval_matrix_configuration" name="Approval Matrix Configuration" parent="equip3_accounting_budget.menu_budget_configuration" sequence="3"/>
    <menuitem 
        id="menu_budget_approval_matrix" 
        name="Budget Approval Matrix" 
        parent="menu_head_budget_approval_matrix_configuration" 
        action="equip3_accounting_masterdata.action_budget_approval_matrix" 
        groups="equip3_accounting_accessright_setting.group_is_budget_approval_matrix"
        sequence="1"/>
    <menuitem 
        id="menu_budget_change_request_approval_matrix" 
        name="Budget Change Request Approval Matrix" 
        parent="menu_head_budget_approval_matrix_configuration" 
        action="equip3_accounting_masterdata.action_budget_approval_change_request_matrix" 
        groups="equip3_accounting_accessright_setting.group_is_budget_change_req_approval_matrix"
        sequence="2"/>
    <menuitem 
        id="menu_purchase_budget_approval_matrix" 
        name="Purchase Budget Approval Matrix" 
        parent="menu_head_budget_approval_matrix_configuration" 
        action="equip3_accounting_masterdata.action_purchase_budget_approval_matrix" 
        groups="equip3_accounting_accessright_setting.group_is_purchase_budget_approval_matrix"
        sequence="3"/>
    <menuitem 
        id="menu_purchase_budget_change_request_approval_matrix" 
        name="Purchase Budget Change Request Approval Matrix" 
        parent="menu_head_budget_approval_matrix_configuration" 
        action="equip3_accounting_masterdata.action_purchase_budget_approval_change_request_matrix" 
        groups="equip3_accounting_accessright_setting.group_is_purchase_budget_change_req_approval_matrix"
        sequence="4"/>

    <record id="menu_budget_configuration" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-parent-accounting-configuration</field> 
    </record>

    <record id="menu_budget" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-parent-accounting-budget</field> 
    </record>

    <record id="menu_purchase_budget" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-parent-accounting-budget</field> 
    </record>

    <record id="menu_budget_report" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-parent-accounting-reporting</field> 
    </record>
</odoo>
