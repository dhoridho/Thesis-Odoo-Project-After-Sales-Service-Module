<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_product_group_search" model="ir.ui.view">
        <field name="name">account.product.group.search</field>
        <field name="model">account.product.group</field>
        <field name="arch" type="xml">
            <search string="Group of Product">
                <field name="name" filter_domain="[('name','ilike',self)]" string="Group of Product"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="branch_id"/>
            </search>
        </field>
    </record>

    <record id="view_account_product_group_tree" model="ir.ui.view">
        <field name="name">account.product.group.tree</field>
        <field name="model">account.product.group</field>
        <field name="arch" type="xml">
            <tree string="Group of Product">
                <field name="name"/>
                <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                <field name="branch_id"/>
            </tree>
        </field>
    </record>

    <record id="open_account_product_group_form" model="ir.actions.act_window">
        <field name="name">Group of Product</field>
        <field name="res_model">account.product.group</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" ref="view_account_product_group_tree"/>
        <field name="search_view_id" ref="view_account_product_group_search"/>
    </record>

    <menuitem action="open_account_product_group_form" id="menu_account_product_group_form"
              parent="equip3_accounting_budget.menu_budget_configuration" sequence="1"/>


    <record id="view_account_product_group_form" model="ir.ui.view">
        <field name="name">view.account.product.group.form</field>
        <field name="model">account.product.group</field>
        <field name="arch" type="xml">
            <form string="Group of Product">
                <group>
                    <group>
                        <field name="name"/>
                        <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                        <field name="branch_id"/>
                        <field name="product_categ_id"/>
                        <field name="product_ids_domain" invisible="1"/>
                        <!-- <field name="product_ids" widget="many2many_tags"/> -->
                    </group>
                </group>
                <notebook>
                    <page string="product">
                        <field name="product_ids" domain="product_ids_domain">
                            <tree>
                                <field name="code" string="Product Code"/>
                                <field name="name" string="Product Name"/>
                                <field name="product_template_attribute_value_ids" widget="many2many_tags" string="Product Variant"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

