<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="carryover_budget_view_form_equip3_inherit">
        <field name="name">budget.carry.over.form.view</field>
        <field name="model">budget.carry.over</field>
        <field name="arch" type="xml">
            <form string="Budget">
                <header>
                    <button name="action_carryover_budget_confirm" string="Confirm" type="object"
                        class="oe_highlight" attrs="{'invisible':[('state','=','confirm')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm" />
                    
                </header>
                <sheet string="Budget">
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Budget Name" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="crossover_budget_id" domain="[('state', '=', 'done'),('amount_remaining','>',0)]" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="is_parent_budget" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="parent_id" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="account_tag_ids" widget="many2many_tags" attrs="{'invisible': [('is_parent_budget', '!=', False)], 'required': [('is_parent_budget', '=', False)], 'readonly':[('state','!=','draft')]}"/>
                        </group>
                        <group>
                            <label for="date_from" string="Period"/>
                            <div>
                                <field name="date_from" class="oe_inline" attrs="{'readonly':[('state','!=','draft')]}"
                                      />
                                -
                                <field name="date_to" class="oe_inline" attrs="{'readonly':[('state','!=','draft')]}"
                                       nolabel="1"/>
                            </div>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}" readonly="1" force_save="1"/>
                            <field name="branch_id" options="{'no_create': True}" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="is_use_theoretical_achievement" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Budget Lines">
                            <field name="budget_carry_over_line_ids"
                                   context="{'default_date_from': date_from,'default_date_to': date_to}" colspan="4"
                                   nolabel="1" attrs="{'readonly':[('state','!=','draft')]}">
                                <tree string="Budget Lines" decoration-success="is_above_budget and planned_amount &gt; 0" decoration-danger="is_above_budget and planned_amount &lt; 0" editable="bottom" create="0" delete="0">
                                    <field name="general_budget_id" readonly="1" force_save="1"/>
                                    <field name="analytic_account_id" groups="analytic.group_analytic_accounting" 
                                        invisible="1"/>
                                    <field name="account_tag_ids" attrs="{'column_invisible': [('parent.is_parent_budget', '!=', False)], 'required': [('parent.is_parent_budget','=',False)]}" widget="many2many_tags" domain="account_tag_ids_domain"/>
                                    <field name="account_tag_ids_domain" invisible="1"/>
                                    <field name="filtered_budget_line" invisible="1" widget="many2many_tags"/>
                                    <field name="parent_analytic_account_id" invisible="1"/>
                                    <field name="date_from"/>
                                    <field name="date_to"/>
                                    <field name="paid_date" groups="base.group_no_one" invisible="1"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="planned_amount" sum="Planned Amount"/>
                                    <field name="carry_over_amount" force_save="1" sum="Carry Amount"/>
                                    <field name="remaining_amount" invisible="1"/>
                                    <field name="final_planned_amount" sum="Final Amount"/>
                                    <field name="practical_amount" sum="Practical Amount" invisible="1"/>
                                    <field name="reserve_amount" invisible="1"/>
                                    <field name="practical_budget_amount" invisible="1"/>
                                    <field name="theoritical_amount" sum="Theoretical Amount" attrs="{'column_invisible': [('parent.is_use_theoretical_achievement', '=', False)]}"/>
                                    <field name="percentage"  widget="percentage" attrs="{'column_invisible': [('parent.is_use_theoretical_achievement', '=', False)]}"/>
                                    <!-- <button type="object" name="action_open_carry_budget_entries" string="Entries..."
                                            icon="fa-arrow-circle-o-right"/> -->
                                    <field name="is_above_budget" invisible="1"/>
                                </tree>
                                <form string="Budget Lines">
                                    <group>
                                        <group>
                                            <field name="currency_id" invisible="1"/>
                                            <field name="general_budget_id"/>
                                            <field name="planned_amount"/>
                                            <field name="analytic_account_id"
                                                   groups="analytic.group_analytic_accounting"/>
                                        </group>
                                        <group>
                                            <label for="date_from" string="Period"/>
                                            <div>
                                                <field name="date_from" class="oe_inline"/>
                                                -
                                                <field name="date_to" class="oe_inline"/>
                                            </div>
                                            <field name="paid_date" groups="base.group_no_one"/>
                                            <field name="company_id" options="{'no_create': True}"
                                                   groups="base.group_multi_company"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="carryover_budget_view_tree">
        <field name="name">budget.carry.over.view.tree</field>
        <field name="model">budget.carry.over</field>
        <field name="arch" type="xml">
            <tree string="Budget">
                <field name="name" colspan="1"/>
                <field name="crossover_budget_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                <field name="state" widget="badge" decoration-info ="state == 'draft'" decoration-success="state == 'confirm'"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="act_carryover_budget_view">
        <field name="name">Carry Over Budget</field>
        <field name="res_model">budget.carry.over</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('equip3_accounting_budget.carryover_budget_view_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('equip3_accounting_budget.carryover_budget_view_form_equip3_inherit')}),
        ]"/>
         <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to create a new Carry Over budget.
            </p>
            <p>
                Use budgets to compare actual with expected revenues and costs
            </p>
        </field>
    </record>
</odoo>
