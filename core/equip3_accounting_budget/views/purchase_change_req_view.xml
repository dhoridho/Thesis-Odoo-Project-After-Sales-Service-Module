<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="purchase_change_request_view_form">
        <field name="name">purchase.change.request.view.form</field>
        <field name="model">purchase.change.request</field>
        <field name="arch" type="xml">
            <form string="Purchase Change Request">
                <header>
                    <button name="action_confirm" string="Confirm" type="object"
                            class="oe_highlight" attrs="{'invisible': ['|', '|', ('is_allowed_to_approval_matrix', '=', True), ('state', '!=', 'draft'), ('approval_matrix', '=', True)]}"/>
                    <button name="action_request_for_approval" string="Request For Approval" type="object"
                            class="oe_highlight" attrs="{'invisible': ['|', '|', ('is_allowed_to_approval_matrix', '=', False), ('state', '!=', 'draft'), ('approval_matrix', '=', False)]}"/>
                    <button name="action_approve" string="Approve" type="object" class="oe_highlight"
                            attrs="{'invisible': ['|', '|', ('is_allowed_to_approval_matrix', '=', False), ('state', '!=', 'to_approve'), ('is_approve_button', '=', False)]}" />
                    <button name="action_reject" string="Reject" type="object" class="oe_highlight"
                            attrs="{'invisible': ['|', '|', ('is_allowed_to_approval_matrix', '=', False), ('state', '!=', 'to_approve'), ('is_approve_button', '=', False)]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,to_approve,approved" 
                            attrs="{'invisible': ['|', ('is_allowed_to_approval_matrix', '=', False), ('state', '=', 'rejected')]}"/>
                    <field name="state1" widget="statusbar" statusbar_visible="draft,to_approve,rejected" 
                            attrs="{'invisible': [
                            '|', ('is_allowed_to_approval_matrix', '=', False),
                            ('state', '!=', 'rejected')]}"/>
                    <field name="state2" widget="statusbar" statusbar_visible="draft,confirm" 
                            attrs="{'invisible': [
                            ('is_allowed_to_approval_matrix', '=', True)]}"/>
                            
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="requested_id" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="budget_std_id" required="1" domain="[('state','=','validate')]" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="is_parent_budget" attrs="{'readonly':[('state','!=','draft')]}" />
                            <field name="parent_budget_id" attrs="{'readonly':[('state','!=','draft')]}" domain="[('is_parent_budget','=',True),('state','=','validate')]" />
                            <field name="parent_id" invisible="1"/>
                            <field name="account_tag_ids" widget="many2many_tags" attrs="{'readonly':[('state','!=','draft')], 'required':[('is_parent_budget','!=', True)], 'invisible': [('is_parent_budget','=', True)]}" domain="account_tag_ids_domain"/>
                            <field name="account_tag_ids_domain" invisible="1"/>
                            <field name="date" required="1" readonly="1"/>
                        </group>
                        <group>
                            <label for="date_from" string="Period"/>
                            <div>
                                <field name="date_from" class="oe_inline"
                                       attrs="{'readonly':[('state','!=','draft')]}"/>
                                       -
                                <field name="date_to" class="oe_inline" attrs="{'readonly':[('state','!=','draft')]}"
                                       nolabel="1"/>
                            </div>
                            <field name="company_id" />
                            <!-- <field name="branch_id" /> -->
                            <field name="branch_id"  required="1" options="{'no_create': True, 'no_create_edit': True}" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="approval_matrix"
                                   attrs="{'invisible': [('is_allowed_to_approval_matrix', '=', False)], 'required': [('is_allowed_to_approval_matrix', '=', True)]}"/>
                            <field name="is_allowed_to_approval_matrix" invisible="1"/>
                            <field name="is_approve_button" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Purchase Budget Change Request Line">
                            <field name="pur_change_req_ids" context="{'default_date_from': date_from, 'default_date_to': date_to, 'default_account_tag_ids': account_tag_ids}" attrs="{'readonly':[('state','!=','draft')]}">
                                <tree editable="bottom">
                                    <field name="group_product_id" attrs="{'readonly': [('product_id','!=',False)], 'column_invisible': [('parent.parent_id','!=',False)]}" />
                                    <field name="product_budget" attrs="{'column_invisible': [('parent.parent_id','=',False)]}" />
                                    <field name="product_id" attrs="{'readonly': [('group_product_id','!=',False)]}" domain="product_id_domain"/>
                                    <field name="product_id_domain" invisible="1"/>
                                    <field name="account_tag_ids" widget="many2many_tags" domain="account_tag_ids_domain" attrs="{'required':[('parent.is_parent_budget','!=', True)], 'column_invisible': [('parent.is_parent_budget', '=', True)],}"/>
                                    <field name="account_tag_ids_domain" invisible="1"/>
                                    <field name="date_from"/>
                                    <field name="date_to"/>
                                    <field name="planned_amount" force_save="1" readonly="1" />
                                    <field name="remaining_amount" force_save="1" readonly="1" />
                                    <field name="new_amount" />
                                </tree>
                            </field>
                        </page>
                        <page string="Approval Matrix Line" name="approved_matrix_ids" attrs="{'invisible': ['|', ('approval_matrix', '=', False), ('is_allowed_to_approval_matrix', '=', False)]}">
                            <field name="approved_matrix_ids" context="{'approved_matrix_ids': approved_matrix_ids}"
                                   force_save="1">
                                <tree create="0" edit="0" delete="0">
                                    <field name="sequence"/>
                                    <field name="user_ids" widget="many2many_tags"/>
                                    <field name="minimum_approver"/>
                                    <field name="state_char"/>
                                    <field name="time_stamp" invisible="1"/>
                                    <field name="feedback"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="purchase_change_request_view_tree">
        <field name="name">purchase.change.request.view.tree</field>
        <field name="model">purchase.change.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="budget_std_id"/>
                <field name="requested_id"/>
                <field name="date"/>
                <field name="state" widget="badge" decoration-success="state in ('done', 'confirm')" decoration-success2="state == 'validate'" decoration-muted="state == 'draft'" decoration-danger3="state == 'cancel'" decoration-danger="state == 'rejected'" decoration-warning3="state == 'to_approve'"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_account_purchase_change_request">
        <field name="name">Purchase Budget Change Request</field>
        <field name="res_model">purchase.change.request</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to create a new Purchase Change request.
            </p>
        </field>
    </record>
</odoo>
