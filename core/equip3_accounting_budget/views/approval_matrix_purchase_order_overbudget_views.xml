<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_form_approval_matrix_purchase_order_overbudget" model="ir.ui.view">
        <field name="name">approval.matrix.purchasse.order.overbudget.form</field>
        <field name="model">approval.matrix.purchase.order.overbudget</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="company_id" force_save="1"/>
                            <field name="branch_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="create_uid"/>
                            <field name="create_date"/>
                        </group>
                        <group>
                            <field name="min_difference_amount" />
                            <field name="max_difference_amount" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Approving Matrix">
                            <field name="approval_matrix_purchase_order_overbudget_line_ids" context="{'approval_matrix_purchase_order_overbudget_line_ids': approval_matrix_purchase_order_overbudget_line_ids}">
                                <tree editable="bottom" class="class_container_approver_matrix">
                                    <field name="sequence" widget="handle"/>
                                    <field name="sequence2" force_save="1" readonly="1" class="approver_matrix_sequence"/>
                                    <field name="user_ids" widget="many2many_tags"/>
                                    <field name="minimum_approver"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_tree_approval_matrix_purchase_order_overbudget" model="ir.ui.view">
        <field name="name">approval.matrix.purchase.order.overbudget.tree</field>
        <field name="model">approval.matrix.purchase.order.overbudget</field>
        <field name="arch" type="xml">
            <tree string="Overbudget PO Approval Matrix">
                <field name="name"/>
                <field name="company_id"/>
                <field name="branch_id"/>
            </tree>
        </field>
    </record>

    <record id="action_approval_matrix_purchase_order_overbudget" model="ir.actions.act_window">
        <field name="name">Overbudget PO Approval Matrix</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">approval.matrix.purchase.order.overbudget</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="approval_matrix_purchase_order_overbudget_menu"
        name="Overbudget PO Approval Matrix"
        parent="equip3_purchase_accessright_setting.approval_matrix_configuration_menu"
        action="action_approval_matrix_purchase_order_overbudget"
        sequence="7"/>

</odoo>