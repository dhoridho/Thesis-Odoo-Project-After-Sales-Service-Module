<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="monthly_account_budget_view_form">
        <field name="name">monthly.account.budget.form</field>
        <field name="model">monthly.account.budget</field>
        <field name="arch" type="xml">
            <form string="Monthly Account Budget">
                <group>
                    <group>
                        <field name="name" required="1"/>
                        <field name="account_plan_id" />
                        <field name="year_id" required="1" options="{'create': False}"/>
                    </group>
                    <group>
                        <field name="company_id" />
                    </group>
                </group>
                <notebook>
                    <page string="Account Plan">
                        <field name="budget_account_line_ids" class="sticky_table" widget="one2many_selectable">
                            <tree editable="bottom">
                                <field name="account_id" force_save="1" readonly="1"/>
                                <field name="jan_month" />
                                <field name="jan_actual"/>
                                <field name="feb_month" />
                                <field name="feb_actual"/>
                                <field name="march_month" />
                                <field name="march_actual"/>
                                <field name="april_month" />
                                <field name="april_actual"/>
                                <field name="may_month" />
                                <field name="may_actual"/>
                                <field name="june_month" />
                                <field name="june_actual"/>
                                <field name="july_month" />
                                <field name="july_actual"/>
                                <field name="august_month" />
                                <field name="august_actual"/>
                                <field name="sep_month" />
                                <field name="sep_actual"/>
                                <field name="oct_month" />
                                <field name="oct_actual"/>
                                <field name="nov_month" />
                                <field name="nov_actual"/>
                                <field name="dec_month" />
                                <field name="dec_actual"/>
                                <field name="planned_amount"/>
                                <field name="actual_amount"/>
                                <field name="over_budget" decoration-success="over_budget == 'no'" decoration-warning="over_budget == 'yes'"/>
                            </tree>
                        </field>
                    </page>
                </notebook>

            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="monthly_account_budget_view_tree">
        <field name="name">monthly.account.budget.view.tree</field>
        <field name="model">monthly.account.budget</field>
        <field name="arch" type="xml">
            <tree>
                <field name="account_plan_id"/>
                <field name="year_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_monthly_account_budget">
        <field name="name">Monthly Account Budget</field>
        <field name="res_model">monthly.account.budget</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to create a new Monthly Account Budget.
            </p>
        </field>
    </record>
</odoo>
