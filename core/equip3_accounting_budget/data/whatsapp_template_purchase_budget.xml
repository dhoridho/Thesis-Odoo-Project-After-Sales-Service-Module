<?xml version="1.0"?>
<odoo>
	<data noupdate="0">

        <!-- category -->
        <record id="wa_template_category_purchase_budget_1" model="qiscus.wa.variable.category">
            <field name="name">Purchase Budget</field>
        </record>

        <!-- Request Approval Notification -->
        <record id="wa_template_new_request_approval_purchase_budget_1" model="master.template.message">
            <field name="name">Request for Approval of Purchase Budget</field>
            <field name="variable_category_id" ref="equip3_accounting_budget.wa_template_category_purchase_budget_1"/>
            <field name="is_accounting">True</field>
        </record>

        <record id="wa_template_new_message_purchase_budget_1" model="master.message.qiscuss">
            <field name="message">Dear {approver_name}. You have approval pending that needs your decision to approve or reject the Purchase Budget. {submitter_name} has requested a {currency} by. You can approve or reject the Purchase Budget by clicking this button: {url}</field>
            <field name="template_id" ref="equip3_accounting_budget.wa_template_new_request_approval_purchase_budget_1"/>
            <field name="sequence">0</field>
        </record>

        <!-- Approval Notification -->
        <record id="wa_template_new_approval_purchase_budget_1" model="master.template.message">
            <field name="name">Approval of Purchase Budget</field>
            <field name="variable_category_id" ref="equip3_accounting_budget.wa_template_category_purchase_budget_1"/>
            <field name="is_accounting">True</field>
        </record>

        <record id="wa_template_new_message_purchase_budget_2" model="master.message.qiscuss">
            <field name="message">Dear {submitter_name}. We have received a response to your request for a Purchase Budget on {create_date}. This notification serves as confirmation that your Purchase Budget has been approved.</field>
            <field name="template_id" ref="equip3_accounting_budget.wa_template_new_approval_purchase_budget_1"/>
            <field name="sequence">0</field>
        </record>

        <!-- Rejection Notification -->
        <record id="wa_template_new_rejection_purchase_budget_1" model="master.template.message">
            <field name="name">Rejection of Purchase Budget</field>
            <field name="variable_category_id" ref="equip3_accounting_budget.wa_template_category_purchase_budget_1"/>
            <field name="is_accounting">True</field>
        </record>

        <record id="wa_template_new_message_purchase_budget_3" model="master.message.qiscuss">
            <field name="message"> Dear {submitter_name}. We have received a response to your request for a Purchase Budget on {create_date}. This notification serves as confirmation that your Purchase Budget has been rejected. Here is the feedback from {approver_name}. {feedback}</field>
            <field name="template_id" ref="equip3_accounting_budget.wa_template_new_rejection_purchase_budget_1"/>
            <field name="sequence">0</field>
        </record>


    </data>
</odoo>


