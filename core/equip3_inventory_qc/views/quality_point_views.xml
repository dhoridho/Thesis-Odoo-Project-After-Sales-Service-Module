<?xml version="1.0"?>
<odoo>
    <record id="quality_point_tree_view" model="ir.ui.view">
        <field name="name">quality.point.tree.view</field>
        <field name="model">sh.qc.point</field>
        <field name="inherit_id" ref="sh_inventory_mrp_qc.quality_point_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='type']" position="before">
                <field name="type_of_qc"/>
            </xpath>
        </field>
    </record>

    <record id="quality_point_form_view" model="ir.ui.view">
        <field name="name">quality.point.form.view</field>
        <field name="model">sh.qc.point</field>
        <field name="inherit_id" ref="sh_inventory_mrp_qc.quality_point_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="required">1</attribute>
                <attribute name="readonly">0</attribute>
            </xpath>
            <xpath expr="//field[@name='type']" position="attributes">
                <attribute name="invisible">1</attribute>
                <attribute name="required">0</attribute>
            </xpath>

            <xpath expr="//field[@name='operation_ids']" position="after">
                <field name="operation_ids_domain" invisible="1"/>
            </xpath>

            <xpath expr="//field[@name='operation_ids']" position="attributes">
                <attribute name="domain">operation_ids_domain</attribute>
            </xpath>

            <xpath expr="//field[@name='is_mandatory']" position="after">
                <field name="block_failed"/>
            </xpath>

            <xpath expr="//field[@name='type']" position="before">
                <field name="type_of_qc" required="1"/>
            </xpath>
            <xpath expr="//field[@name='logged_user']" position="after">
                <field name="is_product_grade"/>
                <field name="product_grade_ids" widget="many2many_tags" attrs="{'invisible':[('is_product_grade', '=', False)]}" domain="product_grade_id_domain"/>
                <field name="product_grade_id_domain" invisible="1"/>
            </xpath>

            <xpath expr="//page[last()]" position="after">
                <page name="check_sheet" string="Check Sheet">
                    <field name="quantitative_ids" context="{'quantitative_ids':quantitative_ids}" attrs="{'invisible':[('type_of_qc', 'not in', ['quantitative','both'])]}">
                        <tree editable="bottom">
                            <field name="sequence" readonly="1" force_save="1"/>
                            <field name="dimansion_id" required="1"/>
                            <field name="norm_qc" required="1"/>
                            <field name="tolerance_from_qc" required="1"/>
                            <field name="tolerance_to_qc" required="1"/>
                        </tree>
                    </field>
                    <field name="qualitative_ids" class="qualitative_line_ids" context="{'qualitative_ids':qualitative_ids}" attrs="{'invisible':[('type_of_qc', 'not in', ['qualitative','both'])]}">
                        <tree editable="bottom">
                            <field name="sequence" readonly="1" force_save="1"/>
                            <field name="item_id" required="1"/>
                            <field name="direction" required="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
