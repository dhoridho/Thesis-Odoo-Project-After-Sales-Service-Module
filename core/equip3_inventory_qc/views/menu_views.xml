<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <!-- Inventory QC -->

     <!-- Dashboard Inventory QC -->
    <menuitem id="menu_inventory_qc_dashboard" name="Inventory Dashboard" action="equip3_inventory_qc.inventory_qc_dashboard_action" parent="sh_inventory_mrp_qc.quality_control_main_menu" sequence="-1" />

    <record id="menu_inventory_qc_dashboard" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-sub-quality-control-dashboard</field>
    </record>


    <!-- Dashboard -->
    <record id="sh_inventory_mrp_qc.menu_qc_dashboard" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-sub-quality-control-dashboard</field>
        <field name="active">False</field>
    </record>

    <!-- All Operation -->
    <record id="sh_inventory_mrp_qc.main_menu_quality_picking" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-parent-quality-control-all-operations</field>
    </record>

    <!-- Quality Check -->
    <record id="sh_inventory_mrp_qc.quality_main_menu" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-parent-quality-control-quality-check</field>
    </record>

    <!-- Quality Alerts -->
    <record id="sh_inventory_mrp_qc.main_menu_quality_alert" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-parent-quality-control-quality-alert</field>
        <field name="active" eval="False"/>
    </record>

    <!-- Reporting -->
    <record id="sh_inventory_mrp_qc.quality_control_report_main_menu" model="ir.ui.menu">
        <field name="equip_icon_class"> o-hm-sidebar-parent-quality-control-reporting</field>
    </record>

    <record id="sh_inventory_mrp_qc.menu_quality_alert_pivot" model="ir.ui.menu">
        <field name="active" eval="False"/>
    </record>

    <record id="sh_inventory_mrp_qc.menu_quality_alert_report" model="ir.ui.menu">
        <field name="active" eval="False"/>
    </record>

    <!-- Configuration -->
    <record id="sh_inventory_mrp_qc.quality_control_config" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-parent-quality-control-configuration</field>
    </record>

    <record id="sh_inventory_mrp_qc.menu_qc_alert_stage" model="ir.ui.menu">
        <field name="active" eval="False"/>
    </record>

    <record id="sh_inventory_mrp_qc.quality_alert_tags_menu" model="ir.ui.menu">
        <field name="active" eval="False"/>
    </record>


</odoo>
