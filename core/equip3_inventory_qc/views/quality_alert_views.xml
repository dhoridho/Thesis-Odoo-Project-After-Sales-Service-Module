<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- sh.quality_alert inherit tree view -->
        <record id="quality_alert_tree_view_inherit" model="ir.ui.view">
            <field name="name">sh.quality_alert.inherit.view.tree</field>
            <field name="model">sh.quality.alert</field>
            <field name="inherit_id" ref="sh_inventory_mrp_qc.quality_alert_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='title']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <!-- sh.quality.alert inherit form view -->
        <record id="quality_alert_form_inherit" model="ir.ui.view">
            <field name="name">sh.quality.alert.inherit.view.form</field>
            <field name="model">sh.quality.alert</field>
            <field name="inherit_id" ref="sh_inventory_mrp_qc.quality_alert_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='stage_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//header/field[@name='stage_id']" position="after">
                    <button name="create_qc_alert" string="Send QC Alert" type="object" class="oe_highlight" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='title']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
