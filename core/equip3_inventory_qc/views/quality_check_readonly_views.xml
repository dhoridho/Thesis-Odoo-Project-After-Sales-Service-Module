<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="quality_check_tree_view_readonly" model="ir.ui.view">
        <field name="name">quality.check.tree.view.readonly</field>
        <field name="model">sh.quality.check</field>
        <field name="arch" type="xml"   >
            <tree decoration-danger="state == 'fail'" decoration-success="state == 'pass'" create="0">
                <field name="product_id" />
                <field name="sh_picking" />
                <field name="sh_date" />
                <field name="sh_control_point" invisible="1"/>
                <field name="control_point_id" />
                <field name="checked_qty"/>
                <field name="state" />
                <field name="type_of_qc"/>
                <field name="qc_type" invisible="1"/>
                <field name="text_message" invisible="1"/>
                <field name="sh_norm" attrs="{'invisible':[('qc_type','!=','type2')]}" />
            </tree>
        </field>
    </record>

    <record id="quality_check_form_view_readonly" model="ir.ui.view">
        <field name="name">quality.check.form.view.readonly</field>
        <field name="model">sh.quality.check</field>
        <field name="arch" type="xml">
            <form string="Quality Check" create="0" edit="0">
                <header>
                    <button name="accept" string="Pass" type="object" class="btn-primary" attrs="{'invisible': [('state', 'not in', 'draft')]}" groups="sh_inventory_mrp_qc.sh_quality_control_manager" />
                    <button name="reject" string="Fail" type="object" class="btn-primary" attrs="{'invisible': [('state', 'not in', 'draft')]}" groups="sh_inventory_mrp_qc.sh_quality_control_manager" />
                    <field name="state" widget="statusbar" statusbar_visible="draft,pass,fail" />
                </header>
                <sheet>
                    <group>
                        <field name="product_id" required="1" />
                        <field name="sh_picking" required="1" />
                        <field name="sh_date" required="1" />
                        <field name="sh_control_point" invisible="1"/>
                        <field name="control_point_id" required="1" />
                        <field name="checked_qty"/>
                        <field name="type_of_qc"/>
                        <field name="qc_type" invisible="1" />
                        <field name="attachment_ids" invisible="1" widget="many2many_binary" />
                        <field name="text_message" invisible="1"/>
                        <field name="sh_norm" invisible="1" />
                        <field name="company_id" groups="base.group_multi_company" />
                    </group>
                    <notebook invisible="1">
                        <page name="quantitative_line_ids" string="Quantitative Lines">
                            <field name="quantitative_line_ids" attrs="{'invisible':[('type_of_qc', '!=', 'quantitative')]}">
                                <tree create="0" editable="bottom">
                                    <field name="sequence" readonly="1" force_save="1"/>
                                    <field name="dimansion_id" readonly="1" force_save="1"/>
                                    <field name="norm_qc" readonly="1" force_save="1"/>
                                    <field name="tolerance_from_qc" readonly="1" force_save="1"/>
                                    <field name="tolerance_to_qc" readonly="1" force_save="1"/>
                                    <field name="actual_value" required="1"/>
                                    <field name="text"/>
                                    <field name="status" decoration-success="status == 'pass'" decoration-danger="status == 'fail'"/>
                                </tree>
                            </field>
                        </page>
                        <page name="qualitative_line_ids" string="Qualitative Lines">
                            <field name="qualitative_line_ids" class="qualitative_line_ids" attrs="{'invisible':[('type_of_qc', '!=', 'qualitative')]}">
                                <tree create="0" editable="bottom">
                                    <field name="sequence" readonly="1" force_save="1"/>
                                    <field name="item_id" readonly="1" force_save="1"/>
                                    <field name="answer" required="1"/>
                                    <field name="text"/>
                                    <field name="status" decoration-success="status == 'pass'" decoration-danger="status == 'fail'"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="quality_check_action_readonly" model="ir.actions.act_window">
        <field name="name">Quality Check</field>
        <field name="res_model">sh.quality.check</field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="context">{'search_default_control_point':1}</field>
        <field name="view_id" ref="quality_check_tree_view" />
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('equip3_inventory_qc.quality_check_tree_view_readonly')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('equip3_inventory_qc.quality_check_form_view_readonly')}),]"
            />
    </record>

</odoo>
