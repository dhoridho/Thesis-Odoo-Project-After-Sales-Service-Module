<?xml version="1.0"?>
<odoo>
    <record id="qc_answer_check_tree_view" model="ir.ui.view">
        <field name="name">qc.answer.check.tree.view</field>
        <field name="model">qc.checksheet.answer</field>
        <field name="arch" type="xml">
            <tree string="Checksheet Answer">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="qc_answer_check_form_view" model="ir.ui.view">
        <field name="name">qc.answer.check.form.view</field>
        <field name="model">qc.checksheet.answer</field>
        <field name="arch" type="xml">
            <form string="Checksheet Answer">
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                        <field name="is_answer"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="checksheet_answer_action" model="ir.actions.act_window">
        <field name="name">Checksheet Answer</field>
        <field name="res_model">qc.checksheet.answer</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="qc_answer_check_tree_view" />
    </record>

    <menuitem id="menu_answer_checksheet" action="checksheet_answer_action" parent="sh_inventory_mrp_qc.quality_control_config" sequence="4" active="False"/>

</odoo>
