<?xml version="1.0"?>
<odoo>
    <record id="qc_items_check_tree_view" model="ir.ui.view">
        <field name="name">qc.items.check.tree.view</field>
        <field name="model">qc.checksheet.items</field>
        <field name="arch" type="xml">
            <tree string="Checksheet Items">
                <field name="name"/>
                <field name="direction"/>
            </tree>
        </field>
    </record>

    <record id="qc_items_check_form_view" model="ir.ui.view">
        <field name="name">qc.items.check.form.view</field>
        <field name="model">qc.checksheet.items</field>
        <field name="arch" type="xml">
            <form string="Checksheet Items">
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                        <field name="direction" required="1"/>
                    </group>
                    <notebook>
                        <page name="answer_ids" string="Answer">
                            <field name='answer_ids' class="answer_ids">
                                <tree editable="bottom">
                                    <field name='name'/>
                                    <field name= 'is_answer'/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="checksheet_items_action" model="ir.actions.act_window">
        <field name="name">Checksheet Items</field>
        <field name="res_model">qc.checksheet.items</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="qc_items_check_tree_view" />
    </record>

    <menuitem id="menu_items_checksheet" action="checksheet_items_action" parent="sh_inventory_mrp_qc.quality_control_config" sequence="5" />

</odoo>
