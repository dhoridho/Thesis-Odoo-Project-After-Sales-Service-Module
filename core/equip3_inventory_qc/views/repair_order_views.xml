<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- repair.order inherit form view -->
    <record id="view_repair_order_form_inherit_qc" model="ir.ui.view">
        <field name="name">repair.order.inherit.view.form</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_method']" position="after">
                <field name="quality_check_id" attrs="{'invisible':[('quality_check_id', '=', False)]}"/>
                <field name="repair_type" attrs="{'invisible':[('quality_check_id', '=', False)], 'required': [('quality_check_id', '!=', False)]}" />
            </xpath>
        </field>
    </record>
</odoo>
