<?xml version="1.0"?>
<odoo>
    <record id="product_template_only_form_view" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Quality Control" name="quantity_control">
                    <group name="sample_qc" string="Quality Check">
                        <div class="d-flex sample_qc" style="width: 90% !important;">
                            <label for="sample_qc" style="font-weight : bold !important"/>
                            <span class="ml-3 mr-3">1 Per</span>
                            <field name="sample_qc" class="sample_qc_edit"/>
                            <span class="ml-3">Products</span>
                        </div>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
