<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="email_template_quality_alert" model="mail.template">
        <field name="name">Stock Quality Alerts</field>
        <field name="email_from">${ctx.get('email_from')}</field>
        <field name="email_to">${ctx.get('email_to')}</field>
        <field name="subject">Quality Alert</field>
        <field name="model_id" ref="equip3_inventory_qc.model_sh_quality_alert"/>
        <field name="auto_delete" eval="True"/>
        <field name="body_html"><![CDATA[
            <p>Dear ${ctx.get('user_name')}, There's product that need to be Quality Checked</p>
            <table style="width:100%">
                <thead style="border:1px solid black;">
                    <th class="text-center" style="border:1px solid black;">Product</th>
                    <th class="text-center" style="border:1px solid black;">Quantity to Check</th>
                    <th class="text-center" style="border:1px solid black;">Partner</th>
                </thead>
                <tbody style="border:1px solid black;">
                    <tr style="border:1px solid black;">
                        <td style="border:1px solid black;text-align:center;">${object.product_id.name}</td>
                        <td style="border:1px solid black;text-align:center;">${ctx.get('checked_qty')}</td>
                        <td style="border:1px solid black;text-align:center;">${object.partner_id.name}</td>
                    </tr>
                </tbody>
            </table>
            <p>Thank you.</p>
            <p style="margin-top: 24px; margin-bottom: 16px;">
                    <a href=${ctx.get('url')} style="background-color:#875A7B; padding: 10px; text-decoration: none; color: #fff; border-radius: 5px;">
                            View ${object.piking_id.name}
                    </a>
                </p>
        ]]>
        </field>
    </record>

</odoo>