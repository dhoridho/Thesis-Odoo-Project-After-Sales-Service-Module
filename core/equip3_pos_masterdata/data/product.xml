<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="discount_service_categ_data" model="product.category">
            <field name="name">Discount Service</field>
            <field name="stock_type">service</field>
            <field name="product_limit">no_limit</field>
            <field name="property_account_income_categ_id" eval="False"/>
            <field name="property_account_expense_categ_id" eval="False"/>
        </record>

        <record id="coupon_service_categ_data" model="product.category">
            <field name="name">Coupon Service</field>
            <field name="stock_type">service</field>
            <field name="product_limit">no_limit</field>
            <field name="property_account_income_categ_id" eval="False"/>
            <field name="property_account_expense_categ_id" eval="False"/>
        </record>

        <record id="product_category_retail" model="product.category">
            <field name="name">POS CATEG</field>
            <field name="stock_type">service</field>
            <field name="product_limit">no_limit</field>
            <field name="is_generate_product_code">True</field>
            <field name="category_prefix_preference">all_products_in_this_category_will_have_same_prefix</field>
            <field name="category_prefix">POS</field>
            <field name="digits">3</field>
            <field name="current_sequence">001</field>
        </record>

        <record id="discount_service_product_data" model="product.template">
            <field name="name">Discount Service</field>
            <field name="standard_price">0</field>
            <field name="list_price">0</field>
            <field name="type">service</field>
            <field name="sale_ok">False</field>
            <field name="available_in_pos">False</field>
            <field name="categ_id" ref="discount_service_categ_data"/>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
        </record>
        <!-- <record id="base.main_company" model="res.company">
            <field name="pos_product_discount1_id" ref="discount_service_product_data"/>
        </record> -->

        <record id="promotion_service_01" model="product.template">
            <field name="name">Promotion service</field>
            <field name="standard_price">0</field>
            <field name="list_price">0</field>
            <field name="type">service</field>
            <field name="available_in_pos">True</field>
            <field name="categ_id" ref="product_category_retail"/>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            <field name="description">PS</field>
            <field name="default_code">PS</field>
        </record>

         <record id="voucher_service" model="product.template">
            <field name="name">Voucher service</field>
            <field name="standard_price">0</field>
            <field name="list_price">0</field>
            <field name="type">service</field>
            <field name="available_in_pos">True</field>
            <field name="categ_id" ref="product_category_retail"/>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            <field name="description">Voucher service</field>
            <field name="default_code">VC</field>
        </record>
        
        <record id="global_discount" model="product.template">
            <field name="name">Discount</field>
            <field name="standard_price">0</field>
            <field name="list_price">0</field>
            <field name="type">service</field>
            <field name="available_in_pos">True</field>
            <field name="categ_id" ref="product_category_retail"/>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            <field name="default_code">GD</field>
        </record>

        <record id="pos_gift_card_product" model="product.template">
            <field name="name">Gift Card</field>
            <field name="available_in_pos">True</field>
            <field name="type">service</field>
            <field name="sale_ok">True</field>
            <field name="available_in_pos">True</field>
            <field name="categ_id" ref="product_category_retail"/>
            <field name="uom_id" ref="uom.product_uom_unit"/>
        </record>

        <record id="coupon_service_product_data" model="product.template">
            <field name="name">Coupon Service</field>
            <field name="standard_price">0</field>
            <field name="list_price">0</field>
            <field name="type">service</field>
            <field name="sale_ok">False</field>
            <field name="available_in_pos">False</field>
            <field name="categ_id" ref="coupon_service_categ_data"/>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
        </record>

        <record id="pos_gift_card_product_type_gold" model="pos.gift.card.type">
            <field name="name">Gold</field>
            <field name="code">001</field>
        </record>

        <record id="pos_gift_card_product_type_silver" model="pos.gift.card.type">
            <field name="name">Silver</field>
            <field name="code">002</field>
        </record>

        <record id="pos_gift_card_product_type_platinum" model="pos.gift.card.type">
            <field name="name">Platinum</field>
            <field name="code">003</field>
        </record>

    </data>
</odoo>
