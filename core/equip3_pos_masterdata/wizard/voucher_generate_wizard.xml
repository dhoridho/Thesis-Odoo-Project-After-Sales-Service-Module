<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="generate_pos_voucher_wizard_wizard_view_form" model="ir.ui.view">
        <field name="name">generate.pos.voucher.wizard</field>
        <field name="model">generate.pos.voucher.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Vouchers">
                <group>
                    <group>
                        <field name="no_of_voucher" required="1"/>
                        <field name="amount_of_usage" required="1"/>
                    </group>
                </group>
                <footer>
                    <button name="action_confirm" string="Generate" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>