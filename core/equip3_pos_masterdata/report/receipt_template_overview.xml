<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="receipt_template_overview_report">
        <t t-call="web.basic_layout">
            <div class="page">
                <div class="pos-receipt pos-receipt-custom_template" t-att-style="'width:'+receipt_template.width+';'"  t-att-id="receipt_template.element_id">
                    <div class="pos-receipt-header-custom-template">
                        <div style="text-align:center;">
                            <t t-if="receipt_template.logo">
                                <img class="pos-receipt-logo" t-att-src="receipt_template.logo" alt="Logo" style="width: 40%; margin-bottom: 12px;"/>
                            </t>
                            <p t-if="receipt_template.company_name" style="margin-bottom: 0px;">
                                <span t-esc="receipt_template.company_name" style="font-weight:bold;"/>
                            </p>
                            <p t-if="receipt_template.pos_branch_name" style="margin: 0px;margin-top:5px;">
                                <span t-esc="receipt_template.pos_branch_name"/>
                            </p>

                            <t if="not receipt_template.branch_street and not receipt_template.branch_street_2">
                                <div t-if="receipt_template.company.street or receipt_template.company.street2" style="color:white;height:5px;">-----</div>
                                <p t-if="receipt_template.company.street" style="margin: 0px;">
                                    <span t-esc="receipt_template.company.street"/>
                                </p>
                                <p t-if="receipt_template.company.street2" style="margin: 0px;">
                                    <span t-esc="receipt_template.company.street2"/>
                                </p>
                            </t>

                            <div t-if="receipt_template.branch_street or receipt_template.branch_street_2" style="color:white;height:5px;">-----</div>

                            <p t-if="receipt_template.branch_street" style="margin: 0px;">
                                <span t-esc="receipt_template.branch_street"/>
                            </p>
                            <p t-if="receipt_template.branch_street_2" style="margin: 0px;">
                                <span t-esc="receipt_template.branch_street_2"/>
                            </p>
                            <p t-if="receipt_template.branch_telephone" style="margin: 0px;margin-top:5px;">
                                <span t-esc="receipt_template.branch_telephone"/>
                            </p>

                            <p t-if="receipt_template.is_need_header and receipt_template.receipt_header_text" class="custom_header_text">
                                <span t-esc="receipt_template.receipt_header_text"/>
                            </p>
                        </div>
                        <div style="margin-top: 15px;">
                            <p style="margin: 3px 0;">Date : <t t-esc="receipt_template.date"/></p>
                            <p style="margin: 3px 0;">No Order : <t t-esc="receipt_template.order_name"/></p>
                            <p style="margin: 3px 0;" class="receipt_cashier">Cashier : <t t-esc="receipt_template.cashier"/></p>
                            <p style="white-space: nowrap; overflow: hidden; text-overflow: unset;margin-bottom:0px;margin: 3px 0;" class="prct_line_break_s_top">--------------------------------------------------------------------------------------</p>
                        </div>
                    </div>
                    <div class="pos-receipt-content-custom-template">
                        <t t-foreach="receipt_template.orderlines" t-as="line">
                            <div style="margin-bottom: 10px;">
                                <p  style="margin: 0px 0px;">
                                    <t  t-if="receipt_template.is_receipt_product_code">
                                        <t t-esc="line.full_product_name"/>
                                    </t>
                                    <t t-else="">
                                        <t t-esc="line.product_only_name" />
                                    </t>
                                </p>
                                <t t-if="receipt_template.is_receipt_serial_lot_info and line.lot_sn">
                                    <p  style="margin: 0px 0px;">Lot/SN : <t t-esc="line.lot_sn"/></p>
                                </t>
                                <div style="display: flex;width: 100%;" class="prct_line_price_core">
                                    <div style="width:3%;">
                                    </div>
                                    <div style="width:57%;">
                                        <p  style="margin: 0px 0px;"><t t-esc="line.quantity"/> <t t-esc="line.unit_name" /> x <t t-esc="line.price"/></p>
                                    </div>
                                    <div class="text-right" style="width:40%;">
                                         <p  style="margin: 0px 0px;"><t t-esc="line.price"/></p>
                                    </div>
                                </div>

                                <div style="display: flex;width: 100%;"  class="div-is_receipt_disc_in_orderline" t-if="receipt_template.is_receipt_disc_in_orderline">
                                    <div style="width:3%;">
                                    </div>
                                    <div style="width:57%;">
                                        <p  style="margin: 0px 0px;">Discount <t t-if="receipt_template.is_show_discount_detail"> (Discount Detail)</t></p>
                                    </div>
                                    <div class="text-right" style="width:40%;">
                                         <p  style="margin: 0px 0px;"><t t-esc="line.price"/></p>
                                    </div>
                                </div>
                            </div>
                        </t>
                        <div>
                            <p  style="margin: 0px 0px;">Total Items : 2</p>
                            <p style="    margin: 1px 0px;white-space: nowrap; overflow: hidden; text-overflow: unset;">--------------------------------------------------------------------------------------</p>
                        </div>
                        <div style="display: flex;width: 100%;" class="receipt_template_c_content_bottom">
                            <div style="width:100%;">
                                <div style="display: flex;width: 100%;">
                                    <div style="width:60%;" class="text-right">
                                        <p  style="    margin: 1px 0px;">Subtotal :</p>
                                        <p  style="    margin: 1px 0px;"  t-if="not receipt_template.is_receipt_tax_include_orderline">Tax :</p>
                                        <p  style="    margin: 1px 0px;" t-if="not receipt_template.is_receipt_disc_in_orderline">Discount :</p>
                                    </div>
                                    <div style="width:40%;"  class="text-right">
                                        <p  style="    margin: 1px 0px;"><t t-esc="receipt_template.price"/></p>
                                        <p  style="    margin: 1px 0px;"  t-if="not receipt_template.is_receipt_tax_include_orderline"><t t-esc="receipt_template.price"/></p>
                                        <p  style="    margin: 1px 0px;" t-if="not receipt_template.is_receipt_disc_in_orderline">
                                            (<t t-esc="receipt_template.price"/>)
                                        </p>
                                    </div>
                                </div>
                                <p style="margin: 1px 0px;white-space: nowrap; overflow: hidden; text-overflow: unset;text-align:right;">--------------------------------------------------</p>
                                <div style="display: flex;width: 100%;">
                                    <div style="width:65%;" class="text-right" id="bottom_detail_price_left">
                                        <p  style="margin: 1px 0px;"><b>Grand Total :</b></p>
                                        <p  style="margin: 1px 0px;" class="preview_receipt_summary_voucher">Voucher :</p>
                                        <p  style="margin: 1px 0px;">Cash :</p>
                                        <p  t-if="receipt_template.is_receipt_tax_include_orderline" style="margin: 1px 0px;">Include Tax :</p>
                                        <p  t-if="receipt_template.is_receipt_disc_in_orderline" style="margin: 1px 0px;">Include Discount :</p>
                                    </div>
                                    <div style="width:35%;"  class="text-right" id="bottom_detail_price_right">
                                        <p  style="margin: 1px 0px;"><t t-esc="receipt_template.price"/></p>
                                        <p  style="margin: 1px 0px;"><t t-esc="receipt_template.price"/></p>
                                        <p  style="margin: 1px 0px;"><t t-esc="receipt_template.price"/></p>
                                        <p  t-if="receipt_template.is_receipt_tax_include_orderline" style="margin: 1px 0px;">
                                            <t t-esc="receipt_template.price"/>
                                        </p>
                                        <p  t-if="receipt_template.is_receipt_disc_in_orderline" style="margin: 1px 0px;">
                                            <t t-esc="receipt_template.price"/>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                    <div class="pos-receipt-footer-custom-template">
                        <div t-if="receipt_template.is_voucher_receipt and receipt_template.voucher_receipt_display=='Barcode'" class="text-center" style="margin-top: 10px; ">
                            <img  t-att-src="'/report/barcode/?type=EAN13&amp;value=TESTING&amp;width=150&amp;height=50'" alt="Barcode"/>
                        </div>
                        <div t-if="receipt_template.is_voucher_receipt and receipt_template.voucher_receipt_display=='QR Code'"  class="text-center"  style="margin-top: 10px; " >
                            <img  t-att-src="'/report/barcode/?type=QR&amp;value=testing&amp;width=80&amp;height=80'" />
                        </div>

                        <div class="receipt_savings_summary" style="text-align:center;margin-top: 7px;" 
                            t-if="receipt_template.is_receipt_savings_summary and receipt_template.savings_summary_text">
                            <p  class="savings_summary_text_footer" >
                                <b t-esc="receipt_template.savings_summary_text"/>
                            </p>
                        </div>
                                
                        <div class="prct_custom_footer" style="text-align:center;margin-top: 12px;" t-if="receipt_template.is_need_footer and receipt_template.receipt_footer_text">
                            <p  class="custom_footer_text" >
                                <span t-esc="receipt_template.receipt_footer_text"/>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
