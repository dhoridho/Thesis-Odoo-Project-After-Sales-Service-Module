<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="report_product_pricelist" model="ir.actions.report">
        <field name="name">Print Pricelist BarCode (PDF)</field>
        <field name="model">product.pricelist</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">equip3_pos_masterdata.print_pricelist_label</field>
        <field name="report_file">equip3_pos_masterdata.print_pricelist_label</field>
        <field name="print_report_name">'Pricelist - %s' % (object.name).replace('/', '')</field>
        <field name="binding_model_id" ref="product.model_product_pricelist"/>
        <field name="binding_type">report</field>
    </record>

    <template id="print_pricelist_label">
        <t t-call="web.basic_layout">
            <div class="page">
                <t t-foreach="docs" t-as="pricelist">
                    <div>
                        <table>
                            <td style="width:33%;" valign="center">
                                <table>
                                    <tr style="height:30%">
                                        <td align="center" valign="center">
                                            <img t-if="pricelist.company_id.logo"
                                                 t-att-src="image_data_uri(pricelist.company_id.logo)"
                                                 style="max-height:45pt;max-width:90%" alt="Company Logo"/>
                                        </td>
                                    </tr>
                                </table>
                            </td>

                        </table>
                        <div>
                            <span t-raw="pricelist.generate_pricelist_report()"/>
                        </div>
                    </div>
                </t>
            </div>
        </t>
    </template>
</odoo>
