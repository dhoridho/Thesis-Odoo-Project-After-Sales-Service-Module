<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <!-- Client Action -->
    <t t-name="pos_restart_data_action">
        <div class="pos_restart_data_action">
            <div class="pos_restart_data_content d-flex flex-column"> 
                <div class="content-header">
                </div>
                <div class="content-body">
                    <div class="content-action">
                        <div class="action-button">
                            <div>
                                <button type="button" class="btn btn-primary btn-pos-remove-indexdb">
                                    <i class="fa fa-trash"></i>
                                    <span>Delete Local Database</span>
                                </button>
                            </div>
                            <div class="text-muted">
                                <span>Delete local database only in your current browser.</span>
                            </div>
                        </div>
                        <div class="action-button">
                            <div>
                                <button type="button" class="btn btn-primary btn-pos-reinstall-poscalllog">
                                    <i class="fa fa-refresh"></i>
                                    <span>Reinstall Log Data</span>
                                </button>
                            </div>
                            <div class="text-muted">
                                <span>Update and replace all data in the POS Cache Datas (server) to the newest and remove local database.
                                <br/>Required to click "Delete Local Database" at other browser to install newest Datas, make sure the process is done before open/resume/refresh POS. 
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="content-installing_data" style="min-height: 170px; display: none;">
                    <div class="container">
                        <div class="loading_content">
                            <div class="loading_icon">
                                <i aria-label="Installing Data..." title="Installing Data..." class="fa fa-fw fa-spin fa-spinner"></i>
                            </div>
                            <div class="loading_message"></div>
                        </div>
                    </div>
                </div>
                <div class="content-footer">
                    <button type="button" class="btn btn-default btn-cancel">
                        <span>Cancel</span>
                    </button>
                </div>
            </div>
        </div>
    </t>

</templates>