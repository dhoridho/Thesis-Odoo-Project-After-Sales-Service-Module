<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="MonitorAutoSyncDetail" owl="1">
        <div role="dialog" class="modal-dialog monitor-auto-sync-detail">
            <Draggable>
                <div class="popup" style="max-width: 1300px;">
                    <header class="title drag-handle">
                        <span>Monitor Auto Sync Detail</span>
                    </header> 
                    <div class="monitor-auto-sync-detail-wrapper" style="padding: 15px; max-height: 500px; overflow: auto;">
                        <div class="monitor-auto-sync-detail-filter" style="text-align: left; margin-bottom: 15px;">
                           <span style="min-width: 100px; display: inline-block;">Filter</span>
                           <span style="display: inline-block">
                              <select style="width: 148px; height: 30px; font-size: 18px;" 
                                t-on-change="onChangeApplyFilter">
                                 <!-- <option value="all">All</option> -->
                                 <option value="product">Product</option>
                                 <option value="product_stock">Product Stock</option>
                                 <option value="pricelist">Pricelist</option>
                                 <option value="promotion">Promotion</option>
                                 <option value="coupon">Coupon</option>
                              </select>
                           </span>
                        </div>

                        <table style="width: 100%; text-align: left;">
                          <thead style="position: sticky; top: 0; z-index: 1;">
                            <tr>
                                <th style="background-color: #f4f4f4; padding: 10px;">Date</th>
                                <th style="background-color: #f4f4f4; padding: 10px;">Type</th>
                                <th style="background-color: #f4f4f4; padding: 10px;text-align: right;">Total Unsync</th>
                                <th style="background-color: #f4f4f4; padding: 10px;text-align: right;">Total Synced</th>
                                <th style="background-color: #f4f4f4; padding: 10px;text-align: right;width: 230px;" title="Duration in Seconds">Duration</th>
                            </tr>
                          </thead>
                          <tbody style="overflow-y: auto; max-height: 400px">
                            <t t-foreach="state.datalist" t-as="data">
                                <tr t-att-data-id="data.id">
                                    <td><t t-esc="get_date(data.date)"/></td>
                                    <td>
                                        <span style="text-transform: capitalize;">
                                            <t t-esc="data.type"/>
                                        </span>
                                    </td>
                                    <td style="text-align: right;">
                                        <t t-esc="data.total_unsync_data"/>
                                    </td>
                                    <td style="text-align: right;">
                                        <t t-esc="data.total_synced_data"/>
                                    </td>
                                    <td style="text-align: right;">
                                        <span><t t-esc="get_duration(data.duration)"/> (sec)</span>
                                    </td>
                                </tr>
                            </t>
                            <t t-if="!state.datalist.length">
                                <tr>
                                    <td colspan="5">
                                        <span style="color: transparent; ">Empty</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="5">
                                        <span style="color: transparent;">Empty</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="5">
                                        <span style="color: transparent;">Empty</span>
                                    </td>
                                </tr>
                            </t>
                          </tbody>
                       </table>
                    </div>
                    <footer class="footer">
                        <div class="button button-close" t-on-click="close">
                            Close
                        </div> 
                    </footer>
                </div>
            </Draggable>
        </div>
    </t>

</templates>