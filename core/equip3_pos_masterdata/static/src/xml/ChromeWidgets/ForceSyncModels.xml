<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="ForceSyncModels" owl="1">
        <div role="dialog" class="modal-dialog force-sync sync-models-popups">
            <Draggable>
                <div class="popup popup-textarea" >
                    <header class="title drag-handle" title="Force sync by download all data without checking existing data in local (slower)">
                        <span>Force Sync Data</span>
                    </header>
                    <div class="sync-models-list-warning oe_hidden" t-on-click="close_warning_message()">
                    </div>
                    <div class="sync-models-list">


                        <div class="sync-models-label">
                            <span>Masterdata</span>
                        </div>
                        <div class="sync-models-listitem" data-sync="promotions" t-att-sync-state="sync_state.promotions">
                            <span>Promotions</span>

                            <div class="sync-loading" t-if="sync_state.promotions == 'connecting'">
                                <i aria-label="Sync Connecting" title="Sync Connecting" class="fa fa-fw fa-spin fa-spinner"></i>
                            </div>
                            <div class="btn-sync-model" t-on-click="sync('promotions')" t-if="sync_state.promotions != 'connecting'">
                                <span>Force Sync</span>
                            </div>
                        </div>

                        
                    </div>
                    <footer class="footer">
                        <div class="button button-close" t-on-click="close">
                            Close
                        </div>
                    </footer>
                </div>
            </Draggable>
        </div>
    </t>

</templates>