<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="MonitorAutoSync" owl="1">
        <div class="monitor-auto-sync"
            style="padding: 10px; position: relative;"
            t-att-class="{ 'oe_hidden': !env.pos.config.is_monitor_auto_sync }">
            <div class="monitor-auto-sync-wrapper" style="border: 1px solid #008f8b; padding: 15px; position: relative;">
               <div 
                    t-on-click="onClickClear" 
                    style="font-size: 12px;text-decoration: underline;text-align: right;cursor: pointer;position: absolute;top: 0;right: 0;height: 44px;width: 44px;padding: 9px 15px;color: red;z-index:1;">
                   <span>Clear</span>
               </div>
               <table 
                title="Click to open the Details"
                t-on-click="trigger('open-monitor-auto-sync-detail')"
                style="width: 100%; text-align: left; margin-top: 30px; cursor: pointer;" >
                  <tbody>
                    <tr>
                        <th>Sync</th>
                        <th style="text-align:right;">Data Count</th>
                    </tr>
                    <tr>
                        <td>Product</td>
                        <td style="text-align:right;">
                            <span><t t-esc="state.count.product"/></span>
                        </td> 
                    </tr>
                    <tr>
                        <td>Product Stock</td>
                        <td style="text-align:right;">
                            <span><t t-esc="state.count.product_stock"/></span>
                        </td> 
                    </tr>
                    <tr>
                        <td>Pricelist</td>
                        <td style="text-align:right;">
                            <span><t t-esc="state.count.pricelist"/></span>
                        </td> 
                    </tr>
                    <tr>
                        <td>Promotion</td>
                        <td style="text-align:right;">
                            <span><t t-esc="state.count.promotion"/></span>
                        </td> 
                    </tr>
                    <tr>
                        <td>Coupon</td>
                        <td style="text-align:right;">
                            <span><t t-esc="state.count.coupon"/></span>
                        </td> 
                    </tr> 
                  </tbody>
               </table>
            </div>
        </div>
    </t>

</templates>