<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="SyncModels" owl="1">
        <div role="dialog" class="modal-dialog sync-models-popups">
            <Draggable>
                <div class="popup popup-textarea" >
                    <header class="title drag-handle">
                        <span>Sync Data</span>
                    </header>
                    <div class="sync-models-list-warning oe_hidden" t-on-click="close_warning_message()">
                    </div>
                    <div class="sync-models-list">


                        <div class="sync-models-label">
                            <span>Masterdata</span>
                        </div>
                        <div class="sync-models-listitem" data-sync="product" t-att-sync-state="sync_state.product">
                            <span>Products</span>

                            <div class="sync-loading" t-if="sync_state.product == 'connecting'">
                                <i aria-label="Sync Connecting" title="Sync Connecting" class="fa fa-fw fa-spin fa-spinner"></i>
                            </div>
                            <div class="btn-sync-model" t-on-click="sync('product')" t-if="sync_state.product != 'connecting'">
                                <span>Sync</span>
                            </div>
                        </div>
                        <div class="sync-models-listitem" data-sync="partner" t-att-sync-state="sync_state.partner">
                            <span><t t-esc="_sync_partner_label()"/></span>

                            <div class="sync-loading" t-if="sync_state.partner == 'connecting'">
                                <i aria-label="Sync Connecting" title="Sync Connecting" class="fa fa-fw fa-spin fa-spinner"></i>
                            </div>
                            <div class="btn-sync-model" t-on-click="sync('partner')" t-if="sync_state.partner != 'connecting'">
                                <span>Sync</span>
                            </div>
                        </div>
                        <div class="sync-models-listitem" data-sync="pricelist" t-att-sync-state="sync_state.pricelist">
                            <span>Pricelist</span>

                            <div class="sync-loading" t-if="sync_state.pricelist == 'connecting'">
                                <i aria-label="Sync Connecting" title="Sync Connecting" class="fa fa-fw fa-spin fa-spinner"></i>
                            </div>
                            <div class="btn-sync-model" t-on-click="sync('pricelist')" t-if="sync_state.pricelist != 'connecting'">
                                <span>Sync</span>
                            </div>
                        </div>
                        <div class="sync-models-listitem" data-sync="lots" t-att-sync-state="sync_state.lots">
                            <span>Lot/Serial Numbers</span>

                            <div class="sync-loading" t-if="sync_state.lots == 'connecting'">
                                <i aria-label="Sync Connecting" title="Sync Connecting" class="fa fa-fw fa-spin fa-spinner"></i>
                            </div>
                            <div class="btn-sync-model" t-on-click="sync('lots')" t-if="sync_state.lots != 'connecting'">
                                <span>Sync</span>
                            </div>
                        </div>
                        <div class="sync-models-listitem" data-sync="vouchers" t-att-sync-state="sync_state.vouchers">
                            <span>Vouchers</span>

                            <div class="sync-loading" t-if="sync_state.vouchers == 'connecting'">
                                <i aria-label="Sync Connecting" title="Sync Connecting" class="fa fa-fw fa-spin fa-spinner"></i>
                            </div>
                            <div class="btn-sync-model" t-on-click="sync('vouchers')" t-if="sync_state.vouchers != 'connecting'">
                                <span>Sync</span>
                            </div>
                        </div>

                        <div class="sync-models-listitem" data-sync="coupons" t-att-sync-state="sync_state.coupons">
                            <span>Coupons</span>

                            <div class="sync-loading" t-if="sync_state.coupons == 'connecting'">
                                <i aria-label="Sync Connecting" title="Sync Connecting" class="fa fa-fw fa-spin fa-spinner"></i>
                            </div>
                            <div class="btn-sync-model" t-on-click="sync('coupons')" t-if="sync_state.coupons != 'connecting'">
                                <span>Sync</span>
                            </div>
                        </div>


                        <div class="sync-models-listitem" data-sync="promotions" t-att-sync-state="sync_state.promotions">
                            <span>Promotions</span>

                            <div class="sync-loading" t-if="sync_state.promotions == 'connecting'">
                                <i aria-label="Sync Connecting" title="Sync Connecting" class="fa fa-fw fa-spin fa-spinner"></i>
                            </div>
                            <div class="btn-sync-model" t-on-click="sync('promotions')" t-if="sync_state.promotions != 'connecting'">
                                <span>Sync</span>
                            </div>
                        </div>


                        <div class="sync-models-label">
                            <span>Transactions</span>
                        </div>
                        <div class="sync-models-listitem" data-sync="pos_orders" t-att-sync-state="sync_state.pos_orders" t-if="is_show_pos_orders()">
                            <span>POS Orders</span>

                            <div class="sync-loading" t-if="sync_state.pos_orders == 'connecting'">
                                <i aria-label="Sync Connecting" title="Sync Connecting" class="fa fa-fw fa-spin fa-spinner"></i>
                            </div>
                            <div class="btn-sync-model" t-on-click="sync('pos_orders')" t-if="sync_state.pos_orders != 'connecting'">
                                <span>Sync</span>
                            </div>
                        </div>
                        <div class="sync-models-listitem" data-sync="invoices" t-att-sync-state="sync_state.invoices" t-if="is_show_invoices()">
                            <span>Invoices</span>

                            <div class="sync-loading" t-if="sync_state.invoices == 'connecting'">
                                <i aria-label="Sync Connecting" title="Sync Connecting" class="fa fa-fw fa-spin fa-spinner"></i>
                            </div>
                            <div class="btn-sync-model" t-on-click="sync('invoices')" t-if="sync_state.invoices != 'connecting'">
                                <span>Sync</span>
                            </div>
                        </div>

                        
                    </div>
                    <footer class="footer">
                        <div class="button button-close" t-on-click="close">
                            Close
                        </div>
                        <div class="button confirm button-sync_all" t-on-click="syncAll">
                            <div class="sync-loading" style="display:none;">
                                <i aria-label="Sync Connecting" title="Sync Connecting" class="fa fa-fw fa-spin fa-spinner"></i>
                            </div>
                            <span>Sync All (will take longer time)</span>
                        </div>
                    </footer>
                </div>
            </Draggable>
        </div>
    </t>

</templates>