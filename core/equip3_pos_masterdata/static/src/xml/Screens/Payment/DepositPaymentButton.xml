<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="DepositPaymentButton" owl="1">
        <button class="mode-button button-use-member-deposit"
            t-att-class="{ 'oe_hidden': is_hidden(), }" 
            t-att-disabled="is_hidden()" 
            t-on-click="useMemberDeposit()">
            <i class="fa fa-money"/>
            <span class="payment-name">
                Use Deposit
            </span>
        </button>
    </t>
</templates>