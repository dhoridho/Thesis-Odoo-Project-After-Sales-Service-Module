<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="PaymentSetCustomerButton" owl="1"> 
        <button class="mode-button button-set-customer" t-on-click="selectClient">
            <i class="fa fa-user" role="img" aria-label="Customer"
               title="Customer"/>
            <span style="font-size: 11px;" class="payment-name">
                <t t-if="env.pos.get_client()">
                    <t t-esc="env.pos.get_client().name"/>
                </t>
                <t t-if="!env.pos.get_client()">
                    Set Customer
                </t>
            </span>
        </button> 
    </t>
    
</templates>