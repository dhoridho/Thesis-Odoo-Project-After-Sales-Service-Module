<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
	<t t-name="TakeAwayOrderLineDetail" owl="1">
		<tr class="receipt-line" t-att-class="{ isNewline: isNewline, isDoneline: isDoneline, oe_hidden: isCancelled}">
            <td class="text-center" width="20%">
                <t t-esc="props.line.qty"/>X
            </td>
            <td class="text-left" style="padding: 10px" width="78%">
                <ul class="product-line-name">
                    <t t-foreach="props.line.name_wrapped" t-as="wrapped_line" t-key="wrapped_line">
                        <t t-esc="wrapped_line"/><br/>
                    </t>
                </ul>
                <t t-if="props.line.note">
                    <ul class="info">
                        Note: <t t-esc="props.line.note"/><br/>
                    </ul>
                </t>
            </td>
        </tr>
	</t>
</templates>