<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
	<t t-name="TakeAwayScreen" owl="1">
        <div class="take-away-screen screen" t-att-class="{ oe_hidden: !props.isShown }">
            <div class="screen-content">
            	<div class="top-content">
                    <img class="pos-logo-take-away"
                        t-att-src="'/web/image?model=res.company&amp;field=logo&amp;id=' + env.session.company_id" alt="Logo"/>
                    <div class="action-buttons-right">
                        <button class="btn" t-on-click="clearScreen">
                            <i class="fa fa-trash "></i>
                            <t t-if="!env.isMobile"> Clear Screen</t>
                        </button>
                    </div>
            	</div>
            	<div class="main-content">
            		<div class="left-content">
                        <div class="take_away_header_title">
                            Inprogress
                        </div>
                        <div class="adjust_tickets_content">
                            <t t-foreach="NewTakeAwayOrders" t-as="order"
                               t-key="order.take_away_tiket_no">
                                <TakeAwayOrder order="order"/>
                            </t>
                        </div>
            		</div>
            		<div class="right-content">
                        <div class="take_away_header_title">
                            DONE
                        </div>
                        <div class="adjust_tickets_content">
                            <t t-foreach="DoneTakeAwayOrders" t-as="order"
                               t-key="order.take_away_tiket_no">
                                <TakeAwayOrder order="order"/>
                            </t>
                        </div>
            		</div>
            	</div>
            </div>
        </div>
	</t>
</templates>