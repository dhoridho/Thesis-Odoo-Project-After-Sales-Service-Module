<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="SaleOrderLines" owl="1">
        <t t-set="order" t-value="props.order"/>
        <div class="orders">
            <div class="header-row">
                <div class="col start" style="   background-color: #148F8B; color: white; font-weight: bolder; text-align: center;">Product</div>
                <div class="col end"  style="    background-color: #148F8B; color: white; font-weight: bolder; text-align: center;">Qty</div>
                <div class="col end"  style="    background-color: #148F8B; color: white; font-weight: bolder; text-align: center;" t-if="!env.isMobile">Qty Delivered</div>
                <div class="col end"  style="    background-color: #148F8B; color: white; font-weight: bolder; text-align: center;">Price Unit</div>
                <div class="col end"  style="    background-color: #148F8B; color: white; font-weight: bolder; text-align: center;">Price Total</div>
            </div>
            <t t-foreach='SaleOrderLines' t-as='line' t-key="line.id">
                <div class="order-row pointer">
                    <div class="col start">
                        <t t-esc="env.pos.generate_wrapped_name(line.name)[0]"></t>
                    </div>
                    <div class="col end">
                        <t t-esc="line.product_uom_qty"></t>
                    </div>
                    <div class="col end" t-if="!env.isMobile">
                        <t t-esc="line.qty_delivered"></t>
                    </div>
                    <div class="col end">
                        <t t-esc="env.pos.format_currency(line.price_unit)"></t>
                    </div>
                    <div class="col end">
                        <t t-esc="env.pos.format_currency(line.price_total)"></t>
                    </div>
                </div>
            </t>
        </div>
    </t>

</templates>
