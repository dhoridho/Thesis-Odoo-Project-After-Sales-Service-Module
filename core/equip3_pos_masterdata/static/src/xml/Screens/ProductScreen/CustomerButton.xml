<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="CustomerButton" owl="1"> 
       <div class="button-set-customer" t-on-click="OnClickCustomer">
            <span t-att-class="{
                    'decentered': isLongName,
                    'oe_hidden': env.session.restaurant_order or !env.pos.config.allow_customer,
                    'highlight': isCustomerSet
                }" style="border-radius: 3px">
                <t t-esc="buttonLabel"/> 
            </span>
        </div> 
    </t>
    
</templates>