<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">

    <t t-name="RetailProductList" owl="1">
        <t t-if="env.pos.config.product_view == 'list'">
            <div class='product-list-container'>
                <div class="product-list-scroller touch-scrollable">
                    <table class='summary-table'>
                        <colgroup>
                            <col width='7%'/>
                            <col width='40%'/>
                            <col width='15%'/>
                            <col width='18%'/>
                            <col width='15%'/>
                            <col width='5%'/>
                        </colgroup>
                        <tr class="receipt-line header">
                            <td style="text-align: center">
                                No.
                            </td>
                            <td style="text-align: left">
                                Name
                            </td>
                            <!-- <td style="text-align: center">
                                Internal Reference
                            </td> -->
                            <td style="text-align: center">
                                Barcode
                            </td>
                            <!-- <td style="text-align: center">

                            </td> -->
                            <td style="text-align: left">
                                List Price
                            </td>
                            <td style="text-align: center" t-if="env.pos.config.display_onhand">
                                Available
                            </td>
                            <!-- <td style="text-align: center" t-if="env.pos.config.allow_edit_product and !env.isMobile">
                                Edit
                            </td> -->
                            <!-- <td style="text-align: center">
                                Archive
                            </td> -->
                            <td align="left" style="text-align: left">
                            </td>
                        </tr>
                        <t t-if="props.products.length != 0 and env.pos.config.allow_add_product">
                            <t t-set="number" t-value="1"/>
                            <t t-foreach="getproductsPagination" t-as="product" t-key="product.id">
                          
                                    <ProductItem number="number" product="product" />
                                    <t t-set="number" t-value="number+1"/>
                            
                            </t>
                        </t>
                        <div t-else="" class="product-list-empty">
                            <t t-if="!env.pos.config.allow_add_product">
                                <div class="product-list-empty">
                                    <p>
                                        You have not permission add Products to Cart
                                    </p>
                                </div>
                            </t>
                            <t t-else="">
                                <div class="product-list-empty">
                                    <t t-if="props.searchWord !== ''">
                                        <p>
                                            No results found for "
                                            <b t-esc="props.searchWord"></b>
                                            ".
                                            You can press to Keyboard "ESC" for quickly Clear Search Box or click (x) on right Search Box
                                        </p>
                                    </t>
                                    <t t-else="">
                                        <p>There are no Products results. You can press to Keyboard "ESC" for quickly Clear Search  or click (x) on right Search Box</p>
                                    </t>
                                </div>
                            </t>
                        </div>
                        
                    </table>
                    <br/><br/><br/>
                    
                </div>

                <div class="div_pagination" t-if="env.pos.config.allow_add_product and props.products.length > 10" style="position: absolute !important;">
                    <ul class="pagination" >
                        <li class="page-item" t-if="IsSHowPrevPagination" t-on-click="clickPrevPagination()">
                          <a class="page-link">Previous</a>
                        </li>
                        <t t-foreach="lengthPagination" t-as="Pagination">
                            <li class="page-item"  t-att-class="{ active: props.page_pagination==Pagination}" t-on-click="clickPagination(Pagination)" ><a class="page-link"><t t-esc="Pagination"/></a></li>
                        </t>
                        <li class="page-item" t-if="IsSHowNextPagination" t-on-click="clickNextPagination()">
                          <a class="page-link" >Next</a>
                        </li>
                    </ul>
                </div>
            </div>
        </t>
        <t t-else="">
            <div class="product-list-container">
                <div t-if="props.products.length != 0 and env.pos.config.allow_add_product" class="product-list">
                    <t t-set="number" t-value="1"/>
                    <t t-foreach="getproductsPagination" t-as="product" t-key="product.id">

                            <ProductItem number="number" product="product" />
                            <t t-set="number" t-value="number+1"/>
                 
                    </t>
                </div>
                <div t-else="" class="product-list-empty">
                    <t t-if="!env.pos.config.allow_add_product">
                        <div class="product-list-empty">
                            <p>
                                You have not permission add Products to Cart
                            </p>
                        </div>
                    </t>
                    <t t-else="">
                        <div class="product-list-empty">
                            <t t-if="props.searchWord !== ''">
                                <p>
                                    No results found for "
                                    <b t-esc="props.searchWord"></b>
                                    ".
                                    You can press to Keyboard "ESC" for quickly Clear Search or click (x) on right Search Box
                                </p>
                            </t>
                            <t t-else="">
                                <p>There are no Products results. You can press to Keyboard "ESC" for quickly Clear Search or click (x) on right Search Box</p>
                            </t>
                        </div>
                    </t>

                </div>
                <br/><br/><br/>
                <div class="div_pagination" t-if="env.pos.config.allow_add_product and props.products.length > 10" style="position: absolute;"> 
                    <ul class="pagination" >
                        <li class="page-item" t-if="IsSHowPrevPagination" t-on-click="clickPrevPagination()">
                          <a class="page-link">Previous</a>
                        </li>
                        <t t-foreach="lengthPagination" t-as="Pagination">
                            <li class="page-item"  t-att-class="{ active: props.page_pagination==Pagination}" t-on-click="clickPagination(Pagination)" ><a class="page-link"><t t-esc="Pagination"/></a></li>
                        </t>
                        <li class="page-item" t-if="IsSHowNextPagination" t-on-click="clickNextPagination()">
                          <a class="page-link" >Next</a>
                        </li>
                    </ul>
                </div>
            </div>
        </t>

    </t>

</templates>
