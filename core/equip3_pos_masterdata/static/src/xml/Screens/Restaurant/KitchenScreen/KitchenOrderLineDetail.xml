<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
	<t t-name="KitchenOrderLineDetail" owl="1">
		<tr class="receipt-line"
            t-att-class="{ highlight: isHighlighted, oe_hidden: !allowDisplay, Cancelled: isCancelled, succeed_box: isSucceed, 'bg-danger': warningWaitingTimeDetail}"
            t-on-click="trigger('click-setSelectedLine', {line: props.line, order: props.order})">
            
            <td class="text-center" width="20%">
                <t t-esc="props.line.qty"/>X
            </td>
            <td class="text-left" style="padding: 10px" width="55%">
                <ul class="product-line-name">
                    <t t-foreach="props.line.name_wrapped" t-as="wrapped_line" t-key="wrapped_line">
                        <t t-esc="display_name(wrapped_line)"/><br/>
                    </t>
                </ul>
                <t t-if="props.line.note">
                    <ul class="info">
                        Note: <t t-esc="props.line.note"/><br/>
                    </ul>
                </t>

                <ul class="info" t-if="props.line.time">
                    <!-- <t t-esc="props.line.time"/> -->
                    <span class="delayed_times" t-if="props.order.state != 'Done'" style="float: left">
                        <KitchenProcessingTimes order="props.order"/>
                    </span>
                </ul>
                <div class="line-description"></div>
            </td>
            <td class="text-center" width="25%">
                <input type="checkbox" t-att-id="props.line.id" class="cb-done-line" t-on-click="trigger('click-doneLine', {line: props.line, order: props.order})"/>
            </td>
        </tr>
	</t>
</templates>