<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="Chrome" t-inherit="point_of_sale.Chrome" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('pos-branding')]" position="after">
            <div  class="ticket-button back-to-home" t-on-click="backToHome" style="width:135px; width:6.75vw;">
                <div class="with-badge"></div>
                <div t-if="!env.isMobile" 
                    style="display: flex;align-items: center;justify-content: center;height: 100%;">
                    <div>Back To Home</div>
                </div>
                <div t-if="env.isMobile" class="h-icon"><i class="fa fa-home"/></div>
            </div>  
        </xpath>
    </t>

    <t t-name="DefaultResScreen" owl="1">
        <div role="dialog" class="modal-dialog">
            <div class="popup popup-confirm" style="transform: translate(-50%, -65%);">
                <header class="title drag-handle">
                    LET'S GET STARTED
                </header>
                <main class="body">
                    <style>
                        .inline:hover { 
                          background: #40aa3c;
                          color: white;
                        }

                        .inline { 
                          display: inline-block; 
                          border: 2px solid; 
                          margin:10px;
                          border-radius: 10px;
                          padding:3px;
                          cursor: pointer;
                        }
                        .popup-confirm .button-confirm {
                            width: 150px;
                            vertical-align: middle;
                            height: 70px;
                            display: inline-flex;
                            align-items: center;
                            padding: 12px;
                            justify-content: center;
                            gap: 4px;
                            border: 2px solid;
                            margin: 10px;
                            border-radius: 10px;
                            cursor: pointer;
                        }
                        .popup-confirm .button-confirm:hover{
                          background: #40aa3c;
                          color: white;
                        }
                    </style>
                    <div style="display: -webkit-box;display: -webkit-flex;display: flex;align-items: center;justify-content: center;flex-direction: column; min-height: 190px;">
                        <div style="padding-bottom: 18px;">
                            <span style="color: #545454; font-weight: bold;">Please Select Order Method Below</span>
                        </div>
                        <div class="action-buttons"> </div>
                    </div>
                </main>
                <footer class="footer" style="display: none;">
                    <div class="button cancel" t-on-click="back">
                        Close
                    </div>
                </footer>
            </div>
        </div>
    </t>

</templates>
