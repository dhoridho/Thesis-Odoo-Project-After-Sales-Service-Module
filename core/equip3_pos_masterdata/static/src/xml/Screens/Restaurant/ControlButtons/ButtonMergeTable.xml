<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="ButtonMergeTable" owl="1">
        <t t-if="(env.pos.config.floor_ids.length > 0 and env.pos.selected_order_method=='dine-in')">
            <t t-if="props.orderLineSection==1">
                <div class="custom_column">
                    <span style="border-radius: 3px">
                        <span>Merge Table</span>
                    </span>
                </div>
            </t>
            <t t-else="">
                <div class="control-button" t-att-class="{ highlight: isHighlighted }">
                    <span>Merge Table</span>
                </div>
            </t>
        </t>
        <t t-else="">
            <div class="button-merge-table oe_hidden"></div>
        </t>
    </t>

</templates>
