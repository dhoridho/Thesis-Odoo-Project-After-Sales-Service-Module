<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="TakeAwayButton" owl="1">
        <span class="control-button control-button-takeaway-order" t-att-class="addedClasses">
            <span class="with-badge" t-att-badge="countItemsNeedPrint">
                <span>Takeaway</span>
                <t t-if="state and state.sync == 'connecting'">
                    <i aria-label="Sync Connecting" title="Sync Connecting" class="fa fa-fw fa-spin fa-spinner"></i>
                </t>
            </span>
        </span>
    </t>

</templates>
