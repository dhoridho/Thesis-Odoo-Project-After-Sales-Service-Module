<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="PopUpConfirmPreOrder" owl="1">
        <div class="modal-dialog">
            <div class="popup medium-form touch-scrollable scrollable-y PopUpConfirmPreOrder">
                <div class="card">
                    <div class="card-content">
                        <h4 class="card-title">
                            Pre - Order
                        </h4>
                        <div class="pop_up-details-box clearfix">
                            <div class="row">
                                <span class='label date-label'>Estimated Date <i class="fa fa-calendar"></i></span>
                                <input type="text" class="form-control datetimepicker"
                                       name="estimated_date" required="1"/>
                            </div>
                        </div>
   
                        <div class="form-footer text-center">
                            <div class="btn btn-success pull-right confirm" t-on-click="confirm">
                                OK
                                <span t-if="!env.isMobile"><i class="fa fa-keyboard-o"/><span> Enter </span></span>
                            </div>
                            <div class="btn btn-danger pull-right cancel" t-on-click="cancel">
                                Close
                                <span t-if="!env.isMobile"><i class="fa fa-keyboard-o"/><span> ESC </span></span>
                             </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>
