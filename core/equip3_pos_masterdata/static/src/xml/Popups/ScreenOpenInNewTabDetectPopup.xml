<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="ScreenOpenInNewTabDetectPopup" owl="1">
        <div role="dialog" class="modal-dialog screen-open-inn-ew-tab-detect-popups">
            <Draggable>
                <div class="popup">
                    <header class="title drag-handle">
                        <t t-esc="props.title" />
                    </header>
                    <main class="body" style="display: flex; align-items: center; justify-content: center; min-height: 150px; ">
                        <t t-esc="props.body"/>
                    </main>
                    <footer class="footer">
                        <div class="button cancel" t-on-click="close_pos">Ok</div>
                    </footer>
                </div>
            </Draggable>
        </div>
    </t>

</templates>