<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="PayReceivablePopUps" owl="1">
        <div role="dialog" class="modal-dialog pay_receivable_popups" t-att-class="view_mode">
            <Draggable>
                <div class="popup popup-textarea" >
                    <header class="title drag-handle">
                        <t t-esc="props.title" />
                    </header>
                    <div class="pay-receivable-form">
                        <div class="pay-receivable-form-control">
                            <label for="pay-receivable_partner_name">Customer</label>
                            <div class="pay-receivable-input">
                                <input type="text" 
                                    readonly="1"
                                    id="pay-receivable_partner_name" 
                                    name="receivable_partner_name" 
                                    t-att-value="props.partner_name"/>
                            </div>
                        </div>
                        <div class="pay-receivable-form-control">
                            <label for="pay-receivable_amount">Amount</label>
                            <div class="pay-receivable-input">
                                <input type="number" 
                                    id="pay-receivable_amount" 
                                    name="pay_receivable_amount" 
                                    t-att-value="props.amount_total"/>
                            </div>
                        </div>
                        <div class="pay-receivable-form-control">
                            <label for="pay-receivable-amount">Payment Method</label>
                            <div class="pay-receivable-select">
                                <select name="pay_receivable_payment_method" id="pay-receivable_payment_method">
                                    <t t-foreach="props.payment_methods" t-as="payment">
                                        <option t-att-value="payment.id"><t t-esc="payment.name"/></option>
                                    </t>
                                </select>
                            </div>
                        </div>
                    </div>
                    <footer class="footer">
                        <div class="button cancel" t-on-click="cancel">
                            <t t-esc="props.cancelText" />
                    
                            <span class="icon-keyboard">
                                <i class="fa fa-keyboard-o"/>
                                ESC
                            </span>
                        </div>
                        <div class="button confirm" t-on-click="confirm">
                            <t t-esc="props.confirmText" />
                            <span class="icon-keyboard">
                                <i class="fa fa-keyboard-o"/>
                                Enter
                            </span>
                        </div>
                    </footer>
                </div>
            </Draggable>
        </div>
    </t>

</templates>