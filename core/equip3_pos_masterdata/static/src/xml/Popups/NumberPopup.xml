<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="NumberPopup" t-inherit="point_of_sale.NumberPopup" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('popup-number')]" position="attributes">
            <attribute name="t-att-design">props.allowScanBarcode and 'style1'</attribute>
        </xpath>
        <xpath expr="//div[hasclass('popup-input')]" position="before">
            <div t-if="props.allowScanBarcode" class="popup-subtitle">
                <span class="login-element" style="float: unset">
                    <div class="login-barcode-text">Scan Badge or insert manager pin</div> 
                </span>
            </div>
        </xpath>
    </t>

</templates>

