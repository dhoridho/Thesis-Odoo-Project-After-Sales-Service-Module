<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="CreditLimitPopup" owl="1">
        <div role="dialog" class="modal-dialog">
            <Draggable>
                <div class="popup credit-limit-popup">
                    <header class="title drag-handle">
                        <t t-esc="props.title"/>
                    </header>
                    <div class="popup-content">
                        <div style="color: #e04040">
                            <span>INSUFFICIENT CREDIT LIMIT</span>
                        </div>
                        <div style="font-size: 14px; font-weight: normal;">
                            <span>
                                Your credit limit is not enough to make payments
                            </span>
                        </div> 
                        <div style="color: black; padding: 30px 0;">
                            <div>Available Credit Limit</div>
                            <div>
                                <span><t t-esc="amount_available_credit_limit()"/></span>
                            </div>
                        </div>
                        <div style="font-size: 14px; font-weight: normal; color: #148F8B">
                            <span>
                                Please make payment for the remaining Receivable
                            </span>
                        </div> 
                    </div>
                    <footer class="footer">
                        <div class="button confirm" t-on-click="confirm">
                            <span>Pay Receivable</span>
                        </div>
                        <div class="button cancel" t-on-click="cancel">
                            Cancel
                        </div>
                    </footer>
                </div>
            </Draggable>
        </div>
    </t>

</templates>
