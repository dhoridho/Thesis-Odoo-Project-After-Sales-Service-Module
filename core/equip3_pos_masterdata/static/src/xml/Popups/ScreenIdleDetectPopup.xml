<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="ScreenIdleDetectPopup" owl="1">
        <div role="dialog" class="modal-dialog screen-idle-detect-popups">
            <Draggable>
                <div class="popup" t-att-sync-state="sync.state">
                    <header class="title drag-handle">
                        <span><t t-esc="props.title"/></span>
                    </header>
                    <div class="popup-content">
                        <t t-if="state.error_message">
                            <div class="message error" style="color: red;">
                                <div><t t-esc="state.error_message"/></div>
                            </div>
                        </t>
                        <t t-else="">
                            <div class="message" t-if="sync.state != 'connecting'">
                                <div><t t-esc="state.message"/></div>
                            </div>
                            <div class="syncing" t-if="sync.state == 'connecting'">
                                 <i aria-label="Sync Connecting" title="Sync Connecting" class="fa fa-fw fa-spin fa-spinner"></i>
                            </div>
                        </t>
                    </div>
                    <footer class="footer">
                        <div class="button button-stay" t-on-click="action_stay">
                            <i class="fa fa-sign-in"></i>
                            <span> <t t-esc="props.stayText"/></span>
                        </div>
                        <div class="button button-close" t-on-click="action_close">
                            <i class="fa fa-power-off "></i>
                            <span> <t t-esc="props.closeText"/></span>
                        </div>
                    </footer>
                </div>
            </Draggable>
        </div>
    </t>

</templates>