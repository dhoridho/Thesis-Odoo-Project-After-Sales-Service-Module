<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="PopUpChangeCartMobile" owl="1">
        <div role="dialog" class="modal-dialog">
            <div class="popup popup-change-cart-mobile">
                <header class="title drag-handle" style="text-align:left;">
                    <t t-esc="props.title"/>
                </header>
                <main class="body">
                    <div class="group-change-qty">
                        <div class="form-change change-qty">
                            <div class="label-change">
                                <span>Qty:</span>
                            </div>
                            <button class="change-qty" t-on-click="clickChangeQty('minus')">
                                <span><i class="fa fa-minus"/></span>
                            </button>
                            <input type="number" step="any" name="quantity" 
                                t-att-value="state.quantity" t-on-change="changeQty"/>
                            <button class="change-qty" t-on-click="clickChangeQty('plus')">
                                <span><i class="fa fa-plus"/></span>
                            </button>
                        </div>
                        <div class="form-change change-price">
                            <div class="label-change">
                                <span>Price:</span>
                            </div>
                            <div class="form-change-price">
                                <input type="number" step="any" name="price" 
                                    t-att-value="props.price" t-on-change="changePrice"/>
                            </div>
                        </div>
                    </div>
                    <t t-if="props.change_unit">
                        <div class="group-change-unit">
                            <div class="title" style="text-align:left;">
                                <t t-esc="props.change_unit"/>
                            </div>
                            <div class="selection scrollable-y">
                                <t t-foreach="props.change_unit_list" t-as="item" t-key="item.id">
                                    <div class="selection-item"  
                                        t-att-class="{ selected: item.isSelected }" 
                                        t-on-click="changeUnit(item.id)">
                                        <div class="selection-item-label"><t t-esc="item.label" /></div>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </t>
                </main>
                <footer class="footer">
                    <div class="button confirm" t-on-click="confirm">
                        <t t-esc="props.confirmText"/>
                    </div>
                    <div class="button cancel" t-on-click="cancel">
                        <t t-esc="props.cancelText"/>
                    </div>
                </footer>
            </div>
        </div>
    </t>

</templates>
