<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

     <t t-name="PopUpCreateCustomer" owl="1">
        <div role="dialog" class="modal-dialog">
            <div class="popup medium-form touch-scrollable scrollable-y clientlist-screen popup_edit_client" >
                <div class="card">
                    <div class="card-content">
                        <h4 class="card-title"><t t-esc="props.title || '' " /></h4>
                        <div class="col-md-4 col-sm-4" style="display: flex;">
                            <div class="form-group label-floating">
                                <div class='client-picture'>
                                    <t><i class='fa fa-camera'></i></t>
                                    <input name="image" type='file' class='image-uploader' t-on-change="OnChange"/>
                                </div>
                            </div>
                            <div>
                                <div class="row" style="    margin-bottom: 12px;">
                                    <span class='label'>
                                        Name
                                    </span>
                                    <input class="form-control"
                                           name="name"
                                           t-att-value="state.name"
                                           t-on-change="OnChange" style="width: 200% !important;"/>
                                </div>
                                <div class="row">
                                    <span class='label'>Street</span>
                                    <input class="form-control"
                                           t-att-value="state.street or ''"
                                           name="street"
                                           t-on-change="OnChange" style="width: 200% !important;"/>
                                </div>
                            </div>
                        </div>
                        <br/><br/><br/>
                        <div class="client-details-box clearfix" style="margin-top: -55px;">
                            <div class="client-details-left" style="padding: unset !important;">

                                <div class="row">
                                    <span class='label'>Mobile</span>
                                    <input class="form-control"
                                           t-att-value="props.mobile or state.mobile or ''"
                                           name="mobile"
                                           t-on-change="OnChange"/>
                                </div>
                                <div class="row">
                                    <span class='label'>Membercode / Barcode</span>
                                    <input class="form-control"
                                           name="barcode"
                                           t-att-value="props.barcode or state.barcode or ''"
                                           t-on-change="OnChange"/>
                                </div>
                                <div class="row">
                                    <span class='label'>Birthday (<t t-esc="props.birthday_date or state.birthday_date or 'N/A'"/>)</span>
                                    <input class="datetimepicker-input form-control"
                                           type="date"
                                           t-att-value="props.birthday_date or state.birthday_date"
                                           t-on-change="OnChange"
                                           placeholder="DD-MM-YYYY (BirthDay Customer)"
                                           name="birthday_date"/>
                                </div>
                                
                                <div class="row">
                                    <span class='label'>City</span>
                                    <input class="form-control"
                                           t-att-value="state.city or ''"
                                           name="city"
                                           t-on-change="OnChange"/>
                                </div>
                                
                                
                                
                            </div>
                            <div class="client-details-right" style="padding: unset !important;">
                                <div class="row">
                                    <span class='label'>Phone</span>
                                    <input class="form-control"
                                           name="phone"
                                           t-att-value="props.phone or state.phone or ''"
                                           t-on-change="OnChange"/>
                                </div>
                                <div class="row">
                                    <span class='label'>Email</span>
                                    <input class="form-control"
                                           t-att-value="state.email or ''"
                                           name="email"
                                           t-on-change="OnChange"/>
                                </div>
                                <t t-if="env.pos.partner_titles">
                                    <div class="row">
                                        <span class='label'>Title</span>
                                        <select class='form-control'
                                                t-on-change="OnChange"
                                                name='title'>
                                             <t t-foreach='env.pos.partner_titles' t-as='partner_title'>
                                                <option t-att-selected="state.title and state.title === partner_title.id ? true : undefined"
                                                        t-att-value='partner_title.id'>
                                                    <t t-esc='partner_title.name'/>
                                                </option>
                                            </t>
                                        </select>
                                    </div>
                                </t>
                                
                                
                                <div class='row'>
                                    <span class='label'>Internal notes</span>
                                    <input class='form-control'
                                           t-on-change="OnChange"
                                           t-att-value="props.comment or state.comment or ''"
                                           name='comment'/>
                                </div>
                    
                            </div>
                        </div>
                        <t t-if="env.pos.pricelists">
                            <div class="row" style="padding-top: 10px; padding-bottom: 13px;">
                                <span class='label'>Pricelist</span>
                                <select class='form-control'
                                        t-on-change="OnChange"
                                        name='property_product_pricelist'>
                                     <t t-foreach='env.pos.pricelists' t-as='pricelist'>
                                        <option t-att-selected="state.property_product_pricelist and state.property_product_pricelist === pricelist.id ? true : undefined"
                                                t-att-value='pricelist.id'>
                                            <t t-esc='pricelist.display_name'/>
                                        </option>
                                    </t>
                                </select>
                            </div>
                        </t>
                        <span class="card-issue" t-if="state.error">
                            <t t-esc="state.error"/>
                        </span>
                        <div class="form-footer text-center" style='display: flex; width: 100%;left: -10px; position: relative;' >
                            <div class="btn btn-danger" t-on-click="cancel" style="border: 1px solid #bd1f2e; font-weight: bolder; width: 50%; background: white; color: #bd1f2e;">
                                Close
                                
                            </div>
                            <div class="btn btn-success " t-on-click="confirm" style="background: #bd1f2e; font-weight: bolder; width: 50%;">
                                Confirm
                     
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>