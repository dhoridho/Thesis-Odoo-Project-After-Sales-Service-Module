<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

     <t t-name="PopUpSetPaymentMDR" owl="1">
        <div role="dialog" class="modal-dialog">
            <div class="popup medium-form touch-scrollable scrollable-y">
                <div class="card">
                    <div class="card-content" style="padding: unset;">
                        <h4 class="card-title" style="color: white; background: #008F8B; margin-left: unset; margin-right: unset;"><t t-esc="props.title"/></h4>

                        <div class="client-details-box clearfix" style="padding: 5px 20px;" t-if="props.select_card">
                            <div>
                                <p style="text-align: left; font-size: 15px;margin-bottom: 5px;margin-top: 0px;"><b>Card Group</b></p>
                                <select name="card_group_mdr" style="background: white; min-height: 44px; border: 1px solid #ded7d7; width: 100%;" t-on-change="OnChangeCardGroup">
                                    <option value=""></option>
                                    <t t-foreach='props.card_group_mdr' t-as="card_group_mdr">
                                        <option t-att-value="card_group_mdr.id"><t t-esc="card_group_mdr.name"/></option>
                                    </t>
                                </select>
                            </div>
                            <div>
                                <p style="text-align: left; font-size: 15px;margin-bottom: 5px;margin-top: 0px;"><b>Card</b></p>
                                <select name="card_payment_mdr" style="background: white; min-height: 44px; border: 1px solid #ded7d7; width: 100%;">
                                    <option value=""></option>
                                    <t t-foreach='props.card_payment_mdr' t-as="card_payment_mdr">
                                        <option t-att-value="card_payment_mdr.id"><t t-esc="card_payment_mdr.name"/></option>
                                    </t>
                                </select>
                            </div>
                            <div>
                                <p style="text-align: left; font-size: 15px;margin-bottom: 5px;margin-top: 0px;"><b>Card Number (BIN)</b></p>
                                <input name="card_number_mdr"/>
                            </div>
                            <div class="card-issue" t-if="props.error" style="color:red;">
                                <t t-esc="props.error"/>
                            </div>
                        </div>

                        <div class="client-details-box clearfix" style="padding: 5px 20px;" t-if="! props.select_card">
                            <div t-if="props.debit_mdr.length > 0" class="payment_mdr_group">
                                <p style="text-align: left; font-size: 15px;margin-bottom: 5px;margin-top: 0px;"><b>Debit Card</b></p>
                                <div class="payment_mdr_list_button" style="display:flex;flex-wrap: wrap;">
                                    <t t-foreach='props.debit_mdr' t-as="debit_mdr">
                                        <div class="payment_mdr_button" style="width: 20%;cursor:pointer;padding-right: 20px;margin-bottom: 10px;" >
                                            <div style="border: 1px solid #dcdbdb; border-radius: 4px;padding: 3px 0;">
                                                <p t-esc="debit_mdr.name" style="font-size: 12px; font-weight: 500; margin: unset;" t-att-data-id="debit_mdr.id" t-on-click="mdrClick"/>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </div>
                            <div t-if="props.credit_mdr.length > 0" class="payment_mdr_group">
                                <p style="text-align: left; font-size: 15px;margin-bottom: 5px;margin-top: 0px;"><b>Credit Card</b></p>
                                <div class="payment_mdr_list_button" style="display:flex;flex-wrap: wrap;">
                                    <t t-foreach='props.credit_mdr' t-as="credit_mdr">
                                        <div class="payment_mdr_button" style="width: 20%;cursor:pointer;padding-right: 20px;margin-bottom: 10px;" >
                                            <div style="border: 1px solid #dcdbdb; border-radius: 4px;padding: 3px 0;">
                                                <p t-esc="credit_mdr.name" style="font-size: 12px; font-weight: 500; margin: unset;" t-att-data-id="credit_mdr.id"  t-on-click="mdrClick"/>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </div>
                            <div t-if="props.qris_mdr.length > 0" class="payment_mdr_group">
                                <p style="text-align: left; font-size: 15px;margin-bottom: 5px;margin-top: 0px;"><b>QRIS</b></p>
                                <div class="payment_mdr_list_button" style="display:flex;flex-wrap: wrap;">
                                    <t t-foreach='props.qris_mdr' t-as="qris_mdr">
                                        <div class="payment_mdr_button" style="width: 20%;cursor:pointer;padding-right: 20px;margin-bottom: 10px;" >
                                            <div style="border: 1px solid #dcdbdb; border-radius: 4px;padding: 3px 0;">
                                                <p t-esc="qris_mdr.name" style="font-size: 12px; font-weight: 500; margin: unset;" t-att-data-id="qris_mdr.id"  t-on-click="mdrClick"/>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </div>
                            <br/>
                        </div>

                        <div class="form-footer text-center">
                            <div class="btn  pull-right" t-on-click="confirm" style="background: #008f8b; color: white; padding: 3px 15px;border: 1px solid #008f8b;" t-if="props.select_card">
                               
                                Confirm
                                
                            </div>
                            <div class="btn pull-right" t-on-click="cancel" style="color: #008f8b; border: 1px solid #008f8b; padding: 3px 15px;">
                                Cancel
                               
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>