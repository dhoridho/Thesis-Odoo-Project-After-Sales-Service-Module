<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="view_pos_receipt_template_tree" model="ir.ui.view">
            <field name="name">view_pos_receipt_template_tree</field>
            <field name="model">pos.receipt.template</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="company_id"/>
            
                </tree>
            </field>
        </record>

        <record id="view_pos_receipt_template_form" model="ir.ui.view">
            <field name="name">view_pos_receipt_template_form</field>
            <field name="model">pos.receipt.template</field>
            <field name="arch" type="xml">
                <form class="receipt_template_form">
                    <sheet>
                        <group name="form_core">
                            <group>
                                <field name="name" required="1"/>
                                <label for="size"/>
                                <div class="oe_inline">
                                    <field name="size"  required="1"/>
                                    <field name="custom_size" class="oe_inline" attrs="{'invisible': [('size', '!=', 'custom')],'required': [('size', '=', 'custom')]}"/>
                                    <span attrs="{'invisible': [('size', '!=', 'custom')]}"> mm</span>
                                </div>
                                <field name="company_id"/>
                         
                                <separator string="Custom Receipt" colspan="4"/>
                                <label for="is_need_header" string="Custom Header Text"/>
                                <div >
                                    <field name="is_need_header"/>
                                    <field name="receipt_header_text" attrs="{'invisible': [('is_need_header', '=', False)],'required': [('is_need_header', '=', True)]}"/>
                                </div>
                                <label for="is_need_footer" string="Custom Footer Text"/>
                                <div >
                                    <field name="is_need_footer"/>
                                    <field name="receipt_footer_text" attrs="{'invisible': [('is_need_footer', '=', False)],'required': [('is_need_footer', '=', True)]}"/>
                                </div>
                                <field name="is_receipt_disc_in_orderline"/>
                                <field name="is_show_discount_detail" attrs="{'invisible': [('is_receipt_disc_in_orderline', '=', False)]}"/>
                                <field name="is_receipt_tax_include_orderline"/>
                                <field name="is_receipt_product_code"/>
                                <field name="is_receipt_serial_lot_info"/>
                                <label for="is_receipt_savings_summary" string="Include savings summary"/>
                                <div >
                                    <field name="is_receipt_savings_summary"/>
                                    <field name="savings_summary_text" 
                                        attrs="{'invisible': [('is_receipt_savings_summary', '=', False)],
                                        'required': [('is_receipt_savings_summary', '=', True)]}"/>
                                </div>
                                <separator string="Voucher On Receipt"   colspan="4"/>
                                <field name="is_voucher_receipt" nolabel="1"/>
                                 <field name="voucher_receipt_display" attrs="{'invisible': [('is_voucher_receipt', '=', False)],'required': [('is_voucher_receipt', '=', True)]}"/>
                                  <field name="generate_voucher_id" attrs="{'invisible': [('is_voucher_receipt', '=', False)],'required': [('is_voucher_receipt', '=', True)]}" options="{'no_create':1}"/>
                            </group>
                            <group string="Receipt Preview">
                                <field name="preview_receipt"  nolabel="1"/>
                            </group>
                        </group>


                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_pos_receipt_template">
            <field name="name">Receipt Template</field>
            <field name="res_model">pos.receipt.template</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem id="menu_pos_receipt_template"
                  parent="point_of_sale.menu_point_config_product"
                  sequence="2"
                  action="act_pos_receipt_template"
        />

    </data>
</odoo>
