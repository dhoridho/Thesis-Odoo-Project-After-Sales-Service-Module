<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
 
    <record id="pos_sync_session_order_form" model="ir.ui.view">
        <field name="name">pos.sync.session.order.form</field>
        <field name="model">pos.sync.session.order</field>
        <field name="arch" type="xml">
            <form create="false" edit="false" delete="false">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,docs"/>
                </header>
                <sheet>
                    <group>
                        <group> 
                            <field name="name"/>
                            <field name="pos_config_id"/>
                            <field name="pos_session_id"/>
                        </group>
                        <group>
                        </group>
                    </group>
                    <notebook>
                        <page name="line" string="Lines">
                            <group>
                                <field name="line_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="product_int"/>
                                        <field name="qty"/>
                                        <field name="data" optional="show"/>
                                        <field name="pos_session_id" optional="show"/>
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group>
                                                <field name="uid"/>
                                                <field name="data"/>
                                            </group>
                                        </sheet>    
                                    </form>
                                </field>
                            </group>
                        </page>
                        <page name="data" string="Data">
                            <group>
                                <field name="data" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pos_sync_session_order_tree" model="ir.ui.view">
        <field name="name">pos.sync.session.order.tree</field>
        <field name="model">pos.sync.session.order</field>
        <field name="arch" type="xml">
            <tree create="false" edit="false">
                <field name="uid"/>
                <field name="create_date"/>
                <field name="write_date"/>
                <field name="pos_config_id" optional="show"/>
                <field name="pos_session_id" optional="show"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="pos_sync_session_order_search" model="ir.ui.view">
        <field name="name">pos.sync.session.order.filter</field>
        <field name="model">pos.sync.session.order</field>
        <field name="arch" type="xml">
            <search>
                <field name="uid"/>
                <field name="pos_config_id"/>
                <field name="pos_session_id"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="pos_sync_session_order_action">
        <field name="name">POS Sync Session Orders</field>
        <field name="res_model">pos.sync.session.order</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem 
        id="pos_sync_session_order_menu"
        name="POS Sync Session Orders"
        action="pos_sync_session_order_action"
        parent="menu_database_logs_config"
        sequence="6"/>

</odoo>