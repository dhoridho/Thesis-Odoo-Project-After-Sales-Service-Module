<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<menuitem id="equip3_pos_masterdata.menu_pos_combo_item" active="False"/>
	<menuitem id="equip3_pos_masterdata.menu_product_combo" active="False"/>
	
	<record id="equip3_pos_masterdata_product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="equip3_pos_masterdata.equip3_pos_masterdata_product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_combo']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='is_combo_item']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//group[@name='combo']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="combo_option_form_view" model="ir.ui.view">
        <field name="name">combo.option.form</field>
        <field name="model">combo.option</field>
        <field name="arch" type="xml">
            <form string="Combo Option">
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>
                    <div class="oe_title">
                        <label class="oe_edit_only" for="combo_name" string="Name"/>
                        <h1><field name="combo_name" placeholder="Combo Option Name"/></h1>
                    </div>
                    <div class="oe_left">
                        <field name="item_ids">
                            <tree editable="bottom">
                                <field name="product_id"/>
                                <field name="extra_price"/>
                            </tree>
                        </field>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="combo_option_tree_view" model="ir.ui.view">
        <field name="name">combo.option.tree</field>
        <field name="model">combo.option</field>
        <field name="arch" type="xml">
            <tree string="Combo Option">
                <field name="combo_name"/>
            </tree>
        </field>
    </record>

    <record id="combo_option_action" model="ir.actions.act_window">
        <field name="name">Combo Option</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">combo.option</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" eval="False"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Define a new Combo Option
          </p>
        </field>
    </record>


</odoo>