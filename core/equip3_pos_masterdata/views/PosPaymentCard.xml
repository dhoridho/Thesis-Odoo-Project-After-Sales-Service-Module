<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="card_group_form_view" model="ir.ui.view">
        <field name="name">group.card.form</field>
        <field name="model">group.card</field>
        <field name="arch" type="xml">
        <form>
        <sheet>
            <field name="card_group_img" widget="image" class="oe_avatar oe_left"/>
                <div class="oe_title" >
                    <label for="card_group_name" class="oe_edit_only" style="margin-left: 16px;"/>
                    <h1>
                        <field name="card_group_name" class="oe_inline" required="1" style="margin-left: 16px;"/>
                    </h1>
                </div>
                       <notebook>
                            <page string="Point of Sale">
                                <group>
                                    <field name="card_group_active" />
                                </group>
                            </page>
                            <page string="Other Information">
                                <group>
                                    <group>
                                        <field name = "company_id"/>
              
                                    </group>
                                    <group>
                                        <field name = "create_date" string="Created on"/>
                                        <field name = "create_uid" string="Created by"/>
                                    </group>      
                                </group>                  
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
                </form>
        </field>
    </record>

    <record id="group_card_tree_view" model="ir.ui.view">
        <field name="name">group.card.tree</field>
        <field name="model">group.card</field>
        <field name="arch" type="xml">
            <tree>
                <field name ="card_group_name"/>
                <field name = "company_id"/>

            </tree>
        </field>
    </record>

    <record id="action_group_card" model="ir.actions.act_window">
        <field name="name">Group Card</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">group.card</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_views_nocontent_create">
           Click to add a new.
          </p>
        </field>
    </record> 

    <menuitem name="Group Card"
    id="pos_group_card"
    parent="point_of_sale.menu_point_config_product"
    action="action_group_card"
    sequence="1"/>


    <record id="card_payment_form_view" model="ir.ui.view">
        <field name="name">card.payment.form</field>
        <field name="model">card.payment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="card_img" widget="image" class="oe_avatar oe_left"/>
                    <div class="oe_title">
                        <label for="card_name" class="oe_edit_only" style="margin-left: 16px;"/>
                        <h1>
                            <field name="card_name" class="oe_inline" required="1" style="margin-left: 16px;"/>
                        </h1>
                    </div>
                    <notebook>
                        <page string="Point of Sale">
                            <group>
                                <group>
                                    <field name="card_active" colspan="4" nolabel="0"/>
                                    <field name="card_group" colspan="4" nolabel="0" required="1"/>
                                    <field name="BIN" colspan="4" nolabel="0"/>
                                    <field name="have_char" colspan="4"/>
                                </group>
                                <group>
                                    <field name="card_type"/>
                                    <field name="company_id"/>
                            
                                </group>
                            </group>
                        </page>
                        <page string="Other Information">
                            <group>
                                <group>
                                    <field name = "company_id"/>
                                  
                                </group>
                                <group>
                                    <field name = "create_date" string="Created on"/>
                                    <field name = "create_uid" string="Created by"/>
                                </group>
                            </group>                  
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="card_tree_view" model="ir.ui.view">
        <field name="name">card.payment.tree</field>
        <field name="model">card.payment</field>
        <field name="arch" type="xml">
            <tree>
                <field name ="card_name"/>
                
                <field name="card_type"/>
                 <field name="card_group" />
                 <field name="card_status" />
                 <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="card_search_view" model="ir.ui.view">
        <field name="name">card.payment.search</field>
        <field name="model">card.payment</field>
        <field name="arch" type="xml">
            <search>
                <field name ="card_name"/>
                <field name="card_type"/>
                <field name="card_group" />
                <group expand="0" string="Group By">
                    <filter name="card_group" string="Group Card"  context="{'group_by':'card_group'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_card_payment" model="ir.actions.act_window">
        <field name="name">Card Payment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">card.payment</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
    <p class="o_view_nocontent_smiling_face">
           Click to add a new.
          </p>
        </field>
        </record>

    <record id="view_pos_pos_form" model="ir.ui.view">
        <field name="name">pos.order.form.card.payment</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook//page[@name='payments']//field[@name='payment_method_id']" position="after">
                <field name="payment_card_id"/>
                <field name="card_payment_number" optional="show"/>
            </xpath>
        </field>
    </record>

    <menuitem 
    id="pos_card_payment"
    name="Card Payment"
    parent="point_of_sale.menu_point_config_product"
    action="action_card_payment"
    groups="base.group_user"
    sequence="2"/>

</odoo>
