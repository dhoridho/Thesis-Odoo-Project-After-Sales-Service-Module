<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
 
    <record id="pos_zone_form" model="ir.ui.view">
        <field name="name">pos.zone.form</field>
        <field name="model">pos.zone</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <group>
                        <group> 
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="company_id" options="{'no_open':True,'no_create':True}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pos_zone_tree" model="ir.ui.view">
        <field name="name">pos.zone.tree</field>
        <field name="model">pos.zone</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="pos_zone_search" model="ir.ui.view">
        <field name="name">pos.zone.filter</field>
        <field name="model">pos.zone</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="pos_zone_action">
        <field name="name">Zone</field>
        <field name="res_model">pos.zone</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem 
        id="pos_zone_menu"
        name="Zone"
        action="pos_zone_action"
        groups="group_pos_supervisor,group_pos_staff,group_pos_manager"
        parent="point_of_sale.menu_point_of_sale"
        sequence="105"/>

</odoo>