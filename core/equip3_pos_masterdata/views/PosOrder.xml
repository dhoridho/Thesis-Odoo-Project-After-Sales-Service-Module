     <record id="pos_masterdata_view_pos_pos_form_inherit" model="ir.ui.view">
        <field name="name">pos.masterdata.view.pos.pos.form.inherit</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="after">
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </xpath>
            <xpath expr="//field[@name='date_order']" position="after">
                <field name="pos_order_day"/>
                <field name="pos_order_hour" widget="float_time"/>
                <field name="hour_group_id"/>
            </xpath>
            <xpath expr="//field[@name='lines']//tree//field[@name='price_unit']" position="after">
                <field name="unit_price_pricelist"  widget="monetary"/>
                <field name="total_price"  widget="monetary" string="Total w/o Discount"/>
                <field name="discount_amount_percent" widget="monetary" string="Discount"/>
                <field name="untax_amount" string="Total w Discount" widget="monetary" />
                 <field name="untax_amount" string="Total w Discount w/o Tax" widget="monetary" />
            </xpath>

            <xpath expr="//field[@name='lines']//tree//field[@name='discount']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='lines']//tree//field[@name='price_subtotal']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='lines']/tree/field[@name='discount']" position="after">
                <field name="pos_coupon_id" optional="hide"/>
            </xpath>
        </field>
    </record>

    <record id="pos_masterdata_view_pos_order_tree_inherit" model="ir.ui.view">
        <field name="name">pos.masterdata.view.pos.order.tree.inherit</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total']" position="replace">
            </xpath>
            <xpath expr="//field[@name='date_order']" position="after">
                <field name="pos_order_day"/>
                <field name="pos_order_hour" widget="float_time"/>
                <field name="hour_group_id"/>
            </xpath>

            <xpath expr="//field[@name='session_id']" position="after">
                <field name="total_before_discount" sum="Total w/o Discount" widget="monetary" />
                <field name="total_discount" sum="Discount" widget="monetary" />
                <field name="total_after_discount" sum="Total w Discount" widget="monetary" />
                 <field name="total_after_discount_w_o_tax" sum="Total w Discount w/o Tax" widget="monetary" />
                 <field name="amount_tax" sum="Tax total" widget="monetary" string="TAX"/>
                <field name="amount_total" sum="Amount total" widget="monetary" decoration-bf="1" string="Total"/>
                <field name="zone_id"/>
            </xpath>
        </field>
    </record>

    <record id="promotion_stack_pos_order_line_form_view" model="ir.ui.view">
        <field name="name">pos.order.line.form</field>
        <field name="model">pos.order.line</field>
        <field name="priority">5001</field>
        <field name="arch" type="xml">
            <form create="0" edit="0" delete="0">
                <sheet>
                    <group string="Promotion Stack">
                        <field name="promotion_stack_ids" nolabel="1" readonly="1">
                            <tree>
                                <field name="sequence" optional="hide"/>
                                <field name="promotion_id"/>
                                <field name="promotion_disc" optional="hide"/>
                                <field name="price" optional="hide"/>
                                <field name="amount_percentage" optional="hide"/>
                                <field name="amount" sum="Amount"/> 
                            </tree>
                            <form>
                                <sheet>
                                    <group>
                                        <field name="sequence"/>
                                        <field name="promotion_id"/>
                                        <field name="promotion_disc"/>
                                        <field name="price"/>
                                    </group>
                                    <group>
                                        <field name="amount_percentage"/>
                                        <field name="amount"/> 
                                    </group>
                                </sheet>
                            </form>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>