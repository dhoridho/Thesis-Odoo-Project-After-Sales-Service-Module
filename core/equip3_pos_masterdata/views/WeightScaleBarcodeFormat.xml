<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="weight_scale_barcode_format_form" model="ir.ui.view">
            <field name="name">weight_scale_barcode_format_form</field>
            <field name="model">weight.scale.barcode.format</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="total_digit" invisible="1"/>
                        </group>
                        <field name="line_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="name" invisible="1"/>
                                <field name="digit"/>
                                <field name="data"/>
                                <field name="coefficient_ratio" attrs="{'readonly': [('data', '!=', 'Weight')]}"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="weight_scale_barcode_format_tree" model="ir.ui.view">
            <field name="name">weight_scale_barcode_format_tree</field>
            <field name="model">weight.scale.barcode.format</field>
            <field name="arch" type="xml">
                <tree string="notes">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="weight_scale_barcode_format_search" model="ir.ui.view">
            <field name="name">weight_scale_barcode_format_search</field>
            <field name="model">weight.scale.barcode.format</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_weight_scale_barcode_format">
            <field name="name">Weight Scale Barcode Format</field>
            <field name="res_model">weight.scale.barcode.format</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_weight_scale_barcode_format"
                  action="act_weight_scale_barcode_format"
                  parent="point_of_sale.menu_point_config_product"
                  sequence="16"
        />

    </data>
</odoo>