<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="generate_pos_voucher_form" model="ir.ui.view">
            <field name="name">generate.pos.voucher.form</field>
            <field name="model">generate.pos.voucher</field>
            <field name="arch" type="xml">
                <form string="Generate Vouchers">
                    <header>
                        <button name="generate_vouchers"
                                string="Generate"
                                type="object"
                                class="btn-primary"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>

                            <group>
                                <field name="start_date"/>
                                <field name="method"/>
                                <field name="customer_id"
                                       attrs="{'invisible': [('method', '=', 'general')], 'required': [('method', '!=', 'general')]}"/>
                                <field name="use_date" invisible="1"/>
                                <field name="minimum_purchase_amount" required="1"/>
                                <field name="minimum_spend" required="1"/>
                                <field name="limit_restrict_product_ids" widget="many2many_tags"/>
                                <field name="pos_category_ids" widget="many2many_tags"/>
                                <field name="brand_ids" widget="many2many_tags"/>
                                <field name="company_id" />

                                <field name="is_customize_sequence"/>
                                <field name="sequence_generate_method"
                                    attrs="{ 'invisible': [('is_customize_sequence','!=', True)], 'required': [('is_customize_sequence','=', True)] }"/>
                                <field name="manual_input_sequence"
                                    attrs="{ 'invisible': ['|',('is_customize_sequence','!=', True), ('sequence_generate_method','!=', 'Manual Input')], 
                                    'required': [('is_customize_sequence','=', True), ('sequence_generate_method','=', 'Manual Input')] }"/>
                                <field name="running_number_prefix" string="Prefix"
                                    attrs="{ 'invisible': ['|',('is_customize_sequence','!=', True), ('sequence_generate_method','!=', 'Running Number')], 
                                    'required': [('is_customize_sequence','=', True), ('sequence_generate_method','=', 'Running Number')] }"/>
                                <field name="running_number_digit" string="Digit"
                                    attrs="{ 'invisible': ['|',('is_customize_sequence','!=', True), ('sequence_generate_method','!=', 'Running Number')], 
                                    'required': [('is_customize_sequence','=', True), ('sequence_generate_method','=', 'Running Number')] }"/>
                                <field name="running_number_current_sequence" string="Sequence"
                                    attrs="{ 'invisible': ['|',('is_customize_sequence','!=', True), ('sequence_generate_method','!=', 'Running Number')], 
                                    'required': [('is_customize_sequence','=', True), ('sequence_generate_method','=', 'Running Number')] }"/>

                            </group>

                            <group>
                                <field name="end_date"/>
                                <field name="apply_type"/>
                                <field name="value" required="1"/>
                                <field name="maximum_discount_amount"  attrs="{'invisible': [('apply_type', '=', 'fixed_amount')], 'required': [('apply_type', '=', 'percent')]}"/>
                                <field name="source" invisible="1"/>

                                <field name="user_id"/>
                                <field name="no_of_usage"/>
                                <field name="no_of_used"/>
                            </group>
                        </group>

                        <group string="Histories Used">
                            <field name="use_history_ids" nolabel="1">
                                <tree string="Histories Used">
                                    <field name="pos_order_id"/>
                                    <!-- <field name="payment_id"/> -->
                                    <field name="used_date"/>
                                    <!-- <field name="value"/> -->
                                    <field name="cashier_id"/>
                                </tree>
                            </field>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="generate_pos_voucher_tree" model="ir.ui.view">
            <field name="name">generate.pos.voucher.tree</field>
            <field name="model">generate.pos.voucher</field>
            <field name="arch" type="xml">
                <tree string="Vouchers">
                    <field name="name"/>
                    <field name="customer_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="apply_type"/>
                    <field name="method"/>
                    <field name="use_date"/>
                    <field name="minimum_purchase_amount" required="1"/>
                    <field name="maximum_discount_amount"  attrs="{'invisible': [('apply_type', '=', 'fixed_amount')], 'required': [('apply_type', '=', 'percent')]}"/>
                    <field name="value"/>
                    <field name="company_id" optional="show"/>
            
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="generate_pos_voucher_search" model="ir.ui.view">
            <field name="name">generate.pos.voucher.search</field>
            <field name="model">generate.pos.voucher</field>
            <field name="arch" type="xml">
                <search string="Vouchers">
                    <field name="name"/>
                    <field name="customer_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="apply_type"/>
                    <field name="method"/>
                    <field name="use_date"/>
                    <field name="state"/>
                </search>
            </field>
        </record>


        <record model="ir.actions.act_window" id="generate_pos_voucher_action">
            <field name="name">Generate Vouchers</field>
            <field name="res_model">generate.pos.voucher</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_generate_pos_voucher_menu"
                  action="generate_pos_voucher_action"
                  parent="menu_promotion_voucher_discount"
                  groups="equip3_pos_masterdata.group_pos_staff,equip3_pos_masterdata.group_pos_supervisor,equip3_pos_masterdata.group_pos_manager"
                  sequence="3"/>
    </data>
</odoo>