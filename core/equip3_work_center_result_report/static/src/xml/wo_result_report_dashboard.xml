<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="equip3_work_center_result_report.wo_result_report_dashboard">
        <div class="o_dashboards" style="width: 100%; height: 100%;">
            <div class="container-fluid wo_result_report_dashboard" style="background: white; width: 100%; height: 100%; display: flex; flex-direction: column;">
                    <div style="background: white;text-align: center; display: flex; margin: 15px 0;">
                        <div class="o_box">
                            <div class="">
                                <h1 class="main_title">Work Center Result Report</h1>
                            </div>
                        </div>
                    </div>
                    <div style="background: white;text-align: center; display: flex; margin: 15px 0;">
                        <div class="col-md-3">
                            <p style="font-size: 15px !important;"><b>Work Center : </b></p>
                            <select name="work_center_select">
                            </select>
                        </div>
                        <div class="col-md-3">
                            <p style="font-size: 15px !important;"><b>Model : </b></p>
                            <input type="text" name="work_center_model_input" style="background: #efefef;" readonly="1"/>
                        </div>
                        <div class="col-md-3">
                            <p style="font-size: 15px !important;"><b>Month : </b></p>
                            <input type="month" name="period_month_year" style="position: relative; top: -3px;width: 60%;"/>
                            <div class="button btn btn-primary btn_board_search" style="position: relative; top: -5px; left: 8px;"> <i class="fa fa-search"/> Search</div>
                            <div class="button btn btn-primary btn_board_clear" style="background-color: red !important; border-color: red !important;position: relative; top: -5px; left: 8px;"> <i class="fa fa-trash"/> Clear</div>
                        </div>
                        <div class="col-md-3">
                            <p style="font-size: 15px !important;color:white;"><b>-</b></p>
                            <div style="width:100%;position: relative; top: -7px;">
                                <div class="button btn btn-primary btn_board_reload" style="background-color: blue !important; border-color: blue !important;"> <i class="fa fa-refresh"/> Reload Table</div>
                                <div class="button btn btn-primary"  style="background-color: green !important; border-color: green !important;"> <i class="fa fa-clone"/> Export</div>
                            </div>
                        </div>
                    </div>
                    <div class="o_website_dashboard_content" style="overflow: scroll; display: flex; margin: 15px 0;"/>
            </div>
        </div>
    </t>




</templates>
