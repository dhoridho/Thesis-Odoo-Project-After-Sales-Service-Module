<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="property_tracking_asset_view_new" model="ir.ui.view">
            <field name="name">property.tracking.asset.view.new.form</field>
            <field name="model">property.tracking</field>
            <field name="arch" type="xml">
                <form string="Property Tracking">
                    <sheet>
                        <div class="col-5 pull-left">
                            <notebook>
                                <page name="property_page" string="All">
                                    <div id="property-all-table" style="font-size: 15px; padding: 0px;"> </div>
                                </page>
                                <page name="reserved_page" string="Reserved">
                                    <div id="property-reserved-table" style="font-size: 15px; padding: 0px;"> </div>
                                </page>
                                <page name="rentable_page" string="Rentable">
                                    <div id="property-rentable-table" style="font-size: 15px; padding: 0px;"> </div>
                                </page>
                                <page name="saleble_page" string="Saleable">
                                    <div id="property-saleble-table" style="font-size: 15px; padding: 0px;">
                                    </div>
                                </page>
                                <page name="propety_sold_page" string="Sold">
                                    <div id="property-sold-table" style="font-size: 15px; padding: 0px;"> </div>
                                </page>
                            </notebook>
                        </div>
                        <div class="col-7 pull-right">
                            <div id="map" style="height: 700px; position: relative; overflow: hidden;"/>
                        </div>
                    </sheet>
                    <script type="text/javascript"
                            src="/equip3_property_masterdata/static/src/js/new_property_tracking_asset.js"/>
                </form>
            </field>
        </record>

        <record id="property_tracking_asset_new_action" model="ir.actions.act_window">
            <field name="name">Property Tracking</field>
            <field name="res_model">property.tracking</field>
            <field name="view_mode">form</field>
        </record>

        <menuitem
            id="property_tracking_menu"
            name="Property Tracking"
            parent="equip3_property_masterdata.property_masterdata_menu"
            action="equip3_property_masterdata.property_tracking_asset_new_action"
            sequence="60"/>

    </data>
</odoo>