<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- model.name inherit form view -->
        <record id="product_inherit_form_view_property_modifier" model="ir.ui.view">
            <field name="name">product.product.inherit.form.view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="property_rental_mgt_app.product_normal_form_view_inherit"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='default_code']" position="before" modifiers="{'readonly':[['is_property','=',true],['state','!=','draft']],'required':[['state','=','draft']]}" id="parent_product">
                    <field name="parent_property" on_change="1"/>
                </xpath>
                <xpath expr="//field[@name='property_book_for']" position="after">
                    <field name="base_price"/>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="product_kanban_view_inherit_masterdata">
            <field name="name">product.product</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="property_rental_mgt_app.product_kanban_view_inherit"/>
            <field name="arch" type="xml">
              <xpath expr="//kanban" position="attributes">
                    <attribute name="records_draggable">0</attribute>
                </xpath>
            </field>
        </record>
    </data>    
</odoo>