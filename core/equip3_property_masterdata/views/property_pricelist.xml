<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- property.pricelist tree view -->
        <record id="property_pricelist_view_tree" model="ir.ui.view">
            <field name="name">property.pricelist.view.tree</field>
            <field name="model">property.pricelist</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- property.pricelist form view -->
        <record id="property_pricelist_view_form" model="ir.ui.view">
            <field name="name">property.pricelist.view.form</field>
            <field name="model">property.pricelist</field>
            <field name="arch" type="xml">
                <form string="Property Pricelist">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Pricelist Name"/>
                            <h1>
                                <field name="name" attrs="{'invisible': [('name','=','/')]}" placeholder="Pricelist Name"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="daily_price"/>
                                <field name="monthly_price"/>
                                <field name="yearly_price"/>    
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- property.pricelist action window -->
        <record id="property_pricelist_action" model="ir.actions.act_window">
            <field name="name">Property Pricelist</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">property.pricelist</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>