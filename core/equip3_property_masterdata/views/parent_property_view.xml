<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="parent_property_view_tree" model="ir.ui.view">
            <field name="name">parent.property.view.tree</field>
            <field name="model">parent.property</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="parent_property_form">
            <field name="name">parent.property.form</field>
            <field name="model">parent.property</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="parent property name" class="oe_inline" required="1"/>
                        </h1>
                    </div>
                </sheet>
                </form>
            </field>
        </record>

        <record id="parent_property_action" model="ir.actions.act_window">
            <field name="name">Parent Property</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">parent.property</field>
            <field name="view_mode">tree,form</field>
            <field name="binding_view_types">form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new parent property.
                </p>
            </field>
        </record>

        <menuitem name="Parent Property" id="parent_property_menu" parent="property_rental_mgt_app.menu_property_config" sequence="16" action="parent_property_action" />
    </data>
</odoo>