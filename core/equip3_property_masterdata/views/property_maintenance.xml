<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- property.maintanance inherit form view -->
        <record id="property_maintenance_inherit_view_form" model="ir.ui.view">
            <field name="name">property.maintanance.inherit.view.form</field>
            <field name="model">property.maintanance</field>
            <field name="inherit_id" ref="property_rental_mgt_app.property_maintanance_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='operation']" position="after">
                    <field name="maintenance_type_id" domain="[('operation_type', '=', operation)]" attrs="{'readonly': [('state', '=', 'invoice')]}"/>
                </xpath>
            </field>
        </record>

        <!-- property.maintanance search view -->
        <record id="property_maintenance_view_search" model="ir.ui.view">
            <field name="name">property.maintanance.view.search</field>
            <field name="model">property.maintanance</field>
            <field name="arch" type="xml">
                <search string="Property Search">
                    <filter string="Property" name="property" context="{'group_by':'property_id'}"/>
                </search>
            </field>
        </record>

        <record id="property_rental_mgt_app.action_maintanance" model="ir.actions.act_window">
            <field name="context">{'search_default_property': 1}</field>
            <field name="search_view_id" ref="property_maintenance_view_search"/>
        </record>

    </data>
</odoo>