<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- agreement tree view -->
        <record id="agreement_contract_detail_view_tree" model="ir.ui.view">
            <field name="name">agreement.view.tree</field>
            <field name="model">agreement</field>
            <field name="arch" type="xml">
                <tree create="false">
                    <field name="name"/>
                    <field name="property_id"/>
                    <field name="property_book_for"/>
                    <field name="agreement_type_id"/>
                    <field name="stage_id"/>
                </tree>
            </field>
        </record>

        <!-- agreement action window -->
        <record id="agreement_contract_details" model="ir.actions.act_window">
            <field name="name">Contract Details</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">agreement</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('property_id', '!=', False)]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('agreement_contract_detail_view_tree')})]"/>

        </record>
        
    </data>
</odoo>