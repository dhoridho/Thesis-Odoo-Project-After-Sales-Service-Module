<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- property.maintenance.type search view -->
        <record id="property_maintenance_type_view_search" model="ir.ui.view">
            <field name="name">property.maintenance.type.view.search</field>
            <field name="model">property.maintenance.type</field>
            <field name="arch" type="xml">
                <search string="Maintenance Type Search">
                    <group expand="0" string="Group By">
                        <filter string="Name" name="name" context="{'group_by':'name'}"/>
                        <separator/>
                        <filter string="Operations" name="operation_type" context="{'group_by': 'operation_type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- maintenance.type tree view -->
        <record id="property_maintenance_type_view_tree" model="ir.ui.view">
            <field name="name">property.maintenance.type.view.tree</field>
            <field name="model">property.maintenance.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="operation_type"/>
                </tree>
            </field>
        </record>

        <!-- property.maintenance.type form view -->
        <record id="property_maintenance_type_view_form" model="ir.ui.view">
            <field name="name">property.maintenance.type.view.form</field>
            <field name="model">property.maintenance.type</field>
            <field name="arch" type="xml">
                <form string="Property Maintenance Type">
                    <sheet>
                        <group string="Maintenance Type">
                            <group>
                                <field name="name"/>
                                <field name="operation_type"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- property.maintenance.type action window -->
        <record id="property_maintenance_type_action" model="ir.actions.act_window">
            <field name="name">Maintenance Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">property.maintenance.type</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="property_maintenance_type_view_search"/>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="property_maintenance_type_menu_act" name="Maintenance Type" parent="property_rental_mgt_app.menu_property_config" action="property_maintenance_type_action" sequence="20"/>
 
    </data>
</odoo>