<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- propert.archive.wizard inherit form view -->
        <record id="property_archive_wizard_form" model="ir.ui.view">
            <field name="name">property.archive.wizard.form</field>
            <field name="model">property.archive.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <div>
                        <p>Are you sure you want to archive this record and its related contract?</p>
                    </div>
                    <footer>
                        <button name="archive_contract_property" string="Property &amp; Contract" type="object" class="oe_highlight"/>
                        <button name="archive_property" string="Only Property" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- property.archive.wizard action window -->
        <record id="property_archive_wizard_action" model="ir.actions.act_window">
            <field name="name">property.archive.wizard.action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">property.archive.wizard</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>