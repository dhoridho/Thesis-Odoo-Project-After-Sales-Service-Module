<odoo>
    <data>

    <record id="send_privy_wizard_signer_view_form" model="ir.ui.view">
        <field name="name">send.privy.wizard.signer.view.form</field>
        <field name="model">send.privy.wizard.signer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="signer_id" required="1"/>
                        <field name="privy_id" string="Privy ID" readonly="1" force_save="1"/>
                        <field name="timestamp" />
                        <field name="multiple_signature" />

                        
                    </group>
                    <notebook>

                        <page name="multiple_signature" string="Multiple Signature" attrs="{'invisible':[('multiple_signature','=',False)]}">
                        <span>For coordinate positioning reference, you can refer to this <a href="https://codepen.io/ValerioEmanuele/pen/pGRZqe# " >website!</a></span>

                            <field name="multiple_signature_ids">
                                <tree editable="bottom">
                                    <field name="posx" string="Position X" />
                                    <field name="posy" string="Position Y"/>
                                    <field name="page" string="Page"/>

                                </tree>
                            
                            </field>
                            
                        </page>
                    </notebook>
                
                </sheet>
            </form>
        </field>
    </record>



        <record id="assign_to_vendor_wizard_view" model="ir.ui.view">
            <field name="name">Send Dcoument To Privy</field>
            <field name="model">send.privy.wizard</field>
            <field name="arch" type="xml">
                <form>

                    <group>
                        <group>
                            <field name="contract_id" required="1" invisible="1"/>
                            <field name="name" required="1" string="Document name"/>
                            <field name="use_another_document"/>
                            <field name="file" attrs="{'invisible':[('use_another_document','=',False)]}" options="{'accepted_file_extensions': '.pdf'}"/>
                            <field name="document_information" invisible="1"/>
                            <field name="doc_process" string="Document Process" required="1"/>
                            <field name="sign_process" required="1"/>
                        </group>

                    </group>
                    <notebook attrs="{'invisible':[('doc_process','=','1')]}">
                        <page string="Signer Level">
                            <field name="signer_ids" >
                                <tree >
                                    <field name="signer_id" />
                                    <field name="privy_id" string="Privy ID"/>
                                    <field name="timestamp" />
                                    <field name="multiple_signature" />

                                </tree>

                            </field>

                        </page>

                    </notebook>

                    <group attrs="{'invisible':[('doc_process','=','0')]}">
                        <field name="e_meterai" string="E-Meterai"/>
                        <span>For coordinate positioning reference, you can refer to this <a href="https://codepen.io/ValerioEmanuele/pen/pGRZqe# " >website!</a></span>

                        <field name="document_category" attrs="{'invisible':[('e_meterai','=',False)],'required':[('e_meterai','=',True)]}"/>
                        <notebook >
                            <page string="Stamp Position" attrs="{'invisible':[('e_meterai','=',False)]}">
                                <field name="materai_ids" >
                                    <tree editable="bottom">
                                        <field name="pos_x" />
                                        <field name="pos_y" />
                                        <field name="page" />
                                        <field name="dimension" />

                                    </tree>

                                </field>

                            </page>

                    </notebook>

                        
                    </group>
                   
                    <footer>
                        <button string="Submit" name="submit"
                                type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>

</odoo>