<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
           

        <record id="email_template_contract_letter_privy" model="mail.template">
            <field name="name">Contract Letter Privy- Send By Email Notify</field>
            <field name="model_id" ref="hr_contract.model_hr_contract"/>
            <field name="subject">Contract Letter to ${object.employee_id.name}</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="body_html"><![CDATA[
            <p>Dear ${object.employee_id.name},</p>
            <br/>
            <p>Based on the Contract ${object.name}.</p>
            <p>You are registered as an employee in this company, all matters relating to your rights and obligations can be seen in your contract letter.</p>
            <p>You can get the Contract Letter in attachment in the below:</p>
            <br/>

            <a href="${ctx['sign_url']}" style="
                display: inline-block;
                padding: 20px;
                background-color: yellow;
                border-radius: 10px;
                text-align: center;
                font-size: 16px;
                font-family: Arial, sans-serif;
                cursor: pointer;
                text-decoration: none;
                color: black;
            ">Sign With Privy</a>

            <br/>
            <br/>

            <p>Thank You</p>
            ]]></field>
        </record>

        
    </data>
</odoo>
