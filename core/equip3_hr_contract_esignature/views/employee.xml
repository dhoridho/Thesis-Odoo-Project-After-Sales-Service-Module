<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="hr_employee_contract_esignature" model="ir.ui.view">
            <field name="name">form.employee.hr.contract.esignature.inherited</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="user_partner_id" readonly="False" string="Related Partner"/>
                </xpath>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button type="object" name="action_view_contact"
                            class="oe_stat_button" icon="o-hm-smart-hrm-view-probation">
                        <span>Contact</span>
                    </button>
                </xpath>
            </field>
        </record>
        


    </data>

    
</odoo>