<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="inherit_hr_contract_esignature" model="ir.ui.view">
            <field name="name">hr.contract.view.form.inherit</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button string="Send To Privy" name="action_send_privy" type="object" class="oe_highlight" />
                </xpath>
                <xpath expr="//notebook[last()]" position="inside">
                    <page string="Contract History" name="contract_history">
                    <field name="contract_history_ids" >
                        <tree create="0" edit="1" delete="0">
                            <field name="reference_number" invisible="1"/>
                            <field name="name" />
                            <field name="document_date" />
                            <field name="status" />
                            <field name="signed_document" widget="binary" filename="name"/>
                            
                            <button
                            string="Check Status"
                            name="check_status"
                            type="object"
                            class="btn-primary"
                            />
                        </tree>
                    </field>



                    </page>
                </xpath>
                
            </field>
        </record>
    
        
    
    </data>
    

</odoo>
