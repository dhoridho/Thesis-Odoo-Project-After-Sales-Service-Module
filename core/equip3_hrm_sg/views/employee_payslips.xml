<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="view_hr_payslip_form" model="ir.ui.view">
            <field name="name">hr.payslip.form</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="scs_hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group" position="replace">
                    <group>
                        <group>
                            <label for="date_from" string="Period"/>
                            <div>
                                <field name="date_from" class="oe_inline"/> - <field name="date_to" class="oe_inline"/>
                            </div>
                            <field name="number"/>
                            <field name="name"/>
                            <field name="total_timesheet_hours" readonly="1"/>
                            <field name="pub_holiday_hours" readonly="1"/>
                            <field name="pay_by_cheque" attrs="{'readonly':[('state', '=', 'done')]}"/>
                            <field name="total_ytd_bonus" readonly="1"/>
                            <field name="total_ytd_cpf_employee" readonly="1"/>
                            <field name="current_ow" readonly="1"/>
                            <field name="current_aw_ow" readonly="1"/>
                            <field name="all_aw_ow_limit" readonly="1"/>
                        </group>
                        <group>
                            <field name="contract_id"/>
                            <field name="struct_id"/>
                            <field name="active"/>
                            <field name="total_hours" readonly="1"/>
                            <field name="overtime_hours" readonly="1"/>
                            <field name="total_ytd_gross" readonly="1"/>
                            <field name="total_ytd_allowance" readonly="1"/>
                            <field name="total_ytd_cpf_employer" readonly="1"/>
                            <field name="current_aw" readonly="1"/>
                            <field name="all_aw_ow" readonly="1"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
        <record id="hr_payslip_run_form" model="ir.ui.view">
            <field name="name">hr.payslip.run.form</field>
            <field name="model">hr.payslip.run</field>
            <field name="inherit_id" ref="scs_hr_payroll.hr_payslip_run_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/label" position="replace"/>
                <xpath expr="//sheet/h1" position="replace">

                </xpath>
                <xpath expr="//sheet/group" position="replace">
                    <group col="4">
                        <field name="name" required="1"/>
                        <field name="name" invisible="1"/>
                        <label for="date_start" string="Period"/>
                         <div>
                               <field name="date_start" class="oe_inline"/> - <field name="date_end" class="oe_inline"/>
                         </div>
                        <field name="credit_note"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>