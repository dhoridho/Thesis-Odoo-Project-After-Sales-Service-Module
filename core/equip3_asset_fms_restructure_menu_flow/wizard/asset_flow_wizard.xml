<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="asset_flow_wizard_view_form" model="ir.ui.view">
        <field name="name">asset_flow_wizard.view.form</field>
        <field name="model">asset.flow.wizard</field>
        <field name="arch" type="xml">
            <form string="Asset Form">
                <script>
                    $(".o_control_panel").remove();
                </script>
                <sheet>
                    <h1>Asset Flow</h1>
                    <div class="container">
                        <div class="row">
                            <!--  Asset and Vehicle Col  -->
                            <div class="col my-auto m-0 p-0 text-center align-self-end">
                                <div class="row mt-2">
                                    <div class="col m-0 p-0 text-center">
                                        <button name="button_asset" type="object" class="btn btn-secondary" width="100" height="95">
                                            <img src="/equip3_asset_flow/static/img/asset.png" width="30"/>
                                            <br/>
                                            Asset
                                        </button>
                                    </div>
                                </div>

                                <div class="row mt-5 mb-5"><br/></div>

                                <div class="row mt-2">
                                    <div class="col m-0 p-0 text-center">
                                        <button name="button_vehicle" type="object" class="btn btn-secondary" width="100" height="95">
                                            <img src="/equip3_asset_flow/static/img/vehicle.png" width="30"/>
                                            <br/>
                                            Vehicle
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <!--  Asset Control Col  -->
                            <div class="col my-auto m-0 p-0 text-center align-self-end">
                                <div class="row mt-2">
                                    <div class="col my-auto m-0 p-0 text-center">
                                        <button name="button_fee_head" type="object" class="p-0" disabled="disabled">
                                            <i class="fa fa-arrow-right" style="font-size:4rem;"/>
                                        </button>
                                    </div>

                                    <div class="col m-0 p-0 text-center">
                                        <button name="button_asset_control" type="object" class="btn btn-secondary" width="100" height="95">
                                            <img src="/equip3_asset_flow/static/img/asset control.png" width="30"/>
                                            <br/>
                                            Asset Control
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <!--  Trinity Seven Col  -->
                            <div class="col my-auto m-0 p-0 text-center">
                                <div class="row mt-2">
                                    <div class="col my-auto m-0 p-0 text-center">
                                        <button name="button_fee_head" type="object" class="p-0" disabled="disabled">
                                            <i class="fa fa-arrow-right" style="font-size:4rem; transform:rotate(-45deg);"/>
                                        </button>
                                    </div>

                                    <div class="col my-auto m-0 p-0 text-center">
                                        <button name="button_preventive_mt_plan" type="object" class="btn btn-secondary" width="100" height="95">
                                            <img src="/equip3_asset_flow/static/img/preventive maintenance plan.png" width="30"/>
                                            <br/>
                                            Preventive Maintenance Plan
                                        </button>
                                    </div>
                                </div>

                                <div class="row mt-2">
                                    <div class="col my-auto m-0 p-0 text-center">
                                        <button name="button_fee_head" type="object" class="p-0" disabled="disabled">
                                            <i class="fa fa-arrow-right" style="font-size:4rem; transform:rotate(-45deg);"/>
                                        </button>
                                    </div>

                                    <div class="col my-auto m-0 p-0 text-center">
                                        <button name="button_hour_meter_mt_plan" type="object" class="btn btn-secondary" width="100" height="95">
                                            <img src="/equip3_asset_flow/static/img/hour meter maintenance plan.png" width="30"/>
                                            <br/>
                                            Hour Meter Maintenance Plan
                                        </button>
                                    </div>
                                </div>

                                <div class="row mt-2">
                                    <div class="col my-auto m-0 p-0 text-center">
                                        <button name="button_fee_head" type="object" class="p-0" disabled="disabled">
                                            <i class="fa fa-arrow-right" style="font-size:4rem; transform:rotate(-45deg);"/>
                                        </button>
                                    </div>

                                    <div class="col my-auto m-0 p-0 text-center">
                                        <button name="button_odoometer_mt_plan" type="object" class="btn btn-secondary" width="100" height="95">
                                            <img src="/equip3_asset_flow/static/img/odoometer maintenance plan.png" width="30"/>
                                            <br/>
                                            Odoometer Maintenance Plan
                                        </button>
                                    </div>
                                </div>

                                <div class="mt-5 mb-5"></div>

                                <div class="row mt-4 mb-4">
                                    <div class="col my-auto m-0 p-0 text-center">
                                        <button name="button_fee_head" type="object" class="p-0" disabled="disabled">
                                            <i class="fa fa-arrow-right" style="font-size:4rem;"/>
                                        </button>
                                    </div>

                                    <div class="col my-auto m-0 p-0 text-center">
                                        <button name="button_mt_request" type="object" class="btn btn-secondary" width="100" height="95">
                                            <img src="/equip3_asset_flow/static/img/maintenance request.png" width="30"/>
                                            <br/>
                                             Maintenance Request
                                        </button>
                                    </div>
                                </div>

                                <div class="mt-5 mb-5"></div>

                                <div class="row mt-2">
                                    <div class="col my-auto m-0 p-0 text-center">
                                        <button name="button_fee_head" type="object" class="p-0" disabled="disabled">
                                            <i class="fa fa-arrow-right" style="font-size:4rem; transform:rotate(45deg);"/>
                                        </button>
                                    </div>

                                    <div class="col my-auto m-0 p-0 text-center">
                                        <button name="button_asset_cost_report" type="object" class="btn btn-secondary" width="100" height="95">
                                            <img src="/equip3_asset_flow/static/img/asset cost report.png" width="30"/>
                                            <br/>
                                            Asset Cost Report
                                        </button>
                                    </div>
                                </div>

                                <div class="row mt-2">
                                    <div class="col my-auto m-0 p-0 text-center">
                                        <button name="button_fee_head" type="object" class="p-0" disabled="disabled">
                                            <i class="fa fa-arrow-right" style="font-size:4rem; transform:rotate(45deg);"/>
                                        </button>
                                    </div>

                                    <div class="col my-auto m-0 p-0 text-center">
                                        <button name="button_vehicle_cost_report" type="object" class="btn btn-secondary" width="100" height="95">
                                            <img src="/equip3_asset_flow/static/img/vehicle cost report.png" width="30"/>
                                            <br/>
                                            Vehicle Cost Report
                                        </button>
                                    </div>
                                </div>

                                <div class="row mt-2">
                                    <div class="col my-auto m-0 p-0 text-center">
                                        <button name="button_fee_head" type="object" class="p-0" disabled="disabled">
                                            <i class="fa fa-arrow-right" style="font-size:4rem; transform:rotate(45deg);"/>
                                        </button>
                                    </div>

                                    <div class="col my-auto m-0 p-0 text-center">
                                        <button name="button_mt_request_report" type="object" class="btn btn-secondary" width="100" height="95">
                                            <img src="/equip3_asset_flow/static/img/maintenance request report.png" width="30"/>
                                            <br/>
                                             Maintenance Request Report
                                        </button>
                                    </div>
                                </div>
                            </div>

                             <!--  Maintenance Work Order Col  -->
                            <div class="col my-auto m-0 p-0 text-center align-self-end">
                                <div class="row mt-2">
                                    <div class="col my-auto m-0 p-0 text-center">
                                        <button name="button_fee_head" type="object" class="p-0" disabled="disabled">
                                            <i class="fa fa-arrow-right" style="font-size:4rem;"/>
                                        </button>
                                    </div>

                                    <div class="col m-0 p-0 text-center">
                                        <button name="button_mt_work_order" type="object" class="btn btn-secondary" width="100" height="95">
                                            <img src="/equip3_asset_flow/static/img/maintenance work order.png" width="30"/>
                                            <br/>
                                            Maintenance Work Order
                                        </button>
                                    </div>
                                </div>
                            </div>

                             <!--  Maintenance Repair Order Col  -->
                            <div class="col my-auto m-0 p-0 text-center align-self-end">
                                <div class="row mt-2">
                                    <div class="col my-auto m-0 p-0 text-center">
                                        <button name="button_fee_head" type="object" class="p-0" disabled="disabled">
                                            <i class="fa fa-arrow-right" style="font-size:4rem;"/>
                                        </button>
                                    </div>

                                    <div class="col m-0 p-0 text-center">
                                        <button name="button_mt_repair_order" type="object" class="btn btn-secondary" width="100" height="95">
                                            <img src="/equip3_asset_flow/static/img/maintenance repair order.png" width="30"/>
                                            <br/>
                                            Maintenance Repair Order
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="asset_flow_wizard_action" model="ir.actions.act_window">
        <field name="name">Asset Flow</field>
        <field name="res_model">asset.flow.wizard</field>
        <field name="view_mode">form</field>
    </record>

    <menuitem
        id="asset_flow_wizard_menu"
        name="Asset Flow"
        action="asset_flow_wizard_action"
        parent="maintenance.menu_maintenance_title"
        sequence="0"/>
</odoo>