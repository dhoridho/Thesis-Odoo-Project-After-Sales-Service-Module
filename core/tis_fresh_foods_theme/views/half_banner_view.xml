<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="action_fresh_foods_half_banner" model="ir.actions.act_window">
        <field name="name">Half Banner</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">half.banner</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>
                Click to Create Half Banner
            </p>
        </field>
    </record>

    <menuitem action="action_fresh_foods_half_banner" id="fresh_foods_half_banner" name="Half Banner"
              parent="fresh_foods_theme_root" sequence="5"/>

    <record id="fresh_foods_half_banner_form_view" model="ir.ui.view">
        <field name="name">fresh.foods.half.banner.form.view</field>
        <field name="model">half.banner</field>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
<!--                            <field name="image" widget="image" class="oe_avatar oe_left"/>-->
                        </group>
                        <group>
                            <field name="heading"/>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="fresh_foods_half_banner_tree_view" model="ir.ui.view">
        <field name="name">fresh.foods.half.banner.tree.view</field>
        <field name="model">half.banner</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

</odoo>