<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Our Product -->

    <record id="action_our_product" model="ir.actions.act_window">
        <field name="name">Our Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">our.products</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p>
                Click to create Our Product
            </p>
        </field>
    </record>


    <menuitem action="action_our_product" id="our_product" name="Our Products"
              parent="fresh_foods_theme_root" sequence="3"/>

    <record id="our_product_tree" model="ir.ui.view">
        <field name="name">our.product.tree</field>
        <field name="model">our.products</field>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="product_id" required="1"/>
            </tree>
        </field>
    </record>

    <!--Popular Product -->

    <record id="action_popular_product" model="ir.actions.act_window">
        <field name="name">Popular Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">popular.products</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p>
                Click to create Popular Product
            </p>
        </field>
    </record>


    <menuitem action="action_popular_product" id="popular_product" name="Popular Products"
              parent="fresh_foods_theme_root" sequence="4"/>

    <record id="popular_product_tree" model="ir.ui.view">
        <field name="name">popular.product.tree</field>
        <field name="model">popular.products</field>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="product_id" required="1"/>
            </tree>
        </field>
    </record>

    <!--Product Menu-->

    <record id="action_product_menu" model="ir.actions.act_window">
        <field name="name">Product Menu</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.menu</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p>
                Click to create Product Menu
            </p>
        </field>
    </record>


    <menuitem action="action_product_menu" id="product_menu" name="Product Menu"
              parent="fresh_foods_theme_root" sequence="6"/>

    <record id="product_menu_tree" model="ir.ui.view">
        <field name="name">product.menu.tree</field>
        <field name="model">product.menu</field>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="product_id" required="1"/>
            </tree>
        </field>
    </record>


</odoo>