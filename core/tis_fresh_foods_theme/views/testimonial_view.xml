<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="action_house_keeping_equipments_testimonials" model="ir.actions.act_window">
        <field name="name">Testimonials</field>
        <field name="res_model">testimonials.testimonials</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>
                Create Testimonials Here
            </p>
        </field>
    </record>

    <menuitem action="action_house_keeping_equipments_testimonials" id="house_keeping_equipments_testimonials" name="Testimonials"
              parent="house_keeping_equipments_theme_root" sequence="5"/>

    <record id="house_keeping_equipments_testimonials_form" model="ir.ui.view">
        <field name="name">testimonials.testimonials.form</field>
        <field name="model">testimonials.testimonials</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id" required="True"/>
                        </group>
                        <group>
                            <field name="testimonials" required="True"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="house_keeping_equipments_testimonials_tree" model="ir.ui.view">
        <field name="name">testimonials.testimonials.tree</field>
        <field name="model">testimonials.testimonials</field>
        <field name="arch" type="xml">
            <tree>
                <field name="partner_id"/>
            </tree>
        </field>
    </record>

</odoo>