<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- === Homepage Page === -->
    <record id="fresh_foods_homepage_view" model="ir.ui.view">
        <field name="name">Home Fresh Food</field>
        <field name="type">qweb</field>
        <field name="key">website.fresh_foods_homepage_view</field>
        <field name="arch" type="xml">
            <t t-name="website.fresh_foods_homepage">
                <t t-call="website.layout">
                    <t t-set="pageName" t-value="'homepage'"/>
                    <div id="wrap">
                        <div class="oe_structure"></div>

                        <section class="head-section">
                            <div class="container-fluid wrap">
                                <t t-foreach="website.get_home_banner()"
                                   t-as="banner">
                                    <div class="mainhead pt-4 text-center">
                                        <h1 class="mh1 m-auto">
                                            <t t-esc="banner.heading"></t>
                                        </h1>
                                        <p class="mp">
                                            <t t-esc="banner.description"></t>
                                        </p>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-3 col-md-1"></div>
                                        <div class="col-lg-6 col-md-10">
                                            <form method="get" action="/shop">
                                                <div class="input-group search-nav mt-3">
                                                    <input type="text"
                                                           name="search"
                                                           placeholder="Search Here"
                                                           class="search-query form-control oe_search_box"
                                                           t-att-value="search"/>
                                                    <div class="input-group-append">
                                                        <button type="submit"
                                                                class="site-btn btn btn-default oe_search_button">
                                                            <span class="input-group-text btn_search">
                                                                Search
                                                            </span>
                                                        </button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                        <div class="col-lg-3 col-md-1"></div>
                                    </div>
                                </t>
                                <div class="owlcarousel pb-5 mt-5">
                                    <div class="carousel-wrap">
                                        <div id="owl-c" class="owl-carousel owl-theme">
                                            <t t-foreach="website.get_category()"
                                               t-as="category">
                                                <div class="item">
                                                    <div class="item-class p-4 m-auto d-block ">
                                                        <img t-attf-src="/website/image/product.public.category/{{category.category_id.id}}/image_1920"
                                                             t-att-alt="category.category_id.name"/>
                                                        <p class="pt-4">
                                                            <t t-esc="category.category_id.name"/>
                                                        </p>
                                                    </div>
                                                </div>
                                            </t>
                                        </div>
                                        <div class="owl-controls owl">
                                            <div class="owl-nav "></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>

                        <div class="oe_structure"></div>


                        <section class="card-list">
                            <div class="container">
                                <div class="row desc m-auto">
                                    <div class="col-lg-12 text-center py-4 px-2 ">
                                        <h1 class="desc-h1">vero amus odio disnigimos</h1>
                                        <p class="text-muted  desc-p">It is a long established fact that a reader will
                                            be distracted by the readable content of a page when looking at its layout.
                                            The point of using Lorem Ipsum is that it has a more-or-less normal
                                            distribution of letters
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <div class="container-fluid wrap">
                                <div class="d-flex align-items-center salad my-4">
                                    <h3>Fresh salad</h3>
                                    <button class="btn view_more_btn ml-auto ">view more</button>
                                </div>
                                <div class="row">
                                    <t t-foreach="website.get_our_product()"
                                       t-as="product">
                                        <div class="col-lg-3 col-md-6 col-sm-6 my-5">
                                            <a t-att-href="'/shop/product/%s' % slug(product.product_id)">
                                                <div class="card h-100  card-salads">
                                                    <img t-attf-src="/website/image/product.template/{{product.product_id.id}}/image_1920"
                                                         t-att-alt="product.product_id.name"/>
                                                    <div class="card-body">
                                                        <h5 class="card-title text-center">
                                                            <t t-esc="product.product_id.name"/>
                                                        </h5>
                                                        <p class="card-para text-center text-muted">
                                                            <t t-esc="product.product_id.description"/>
                                                        </p>
                                                        <p class="card-text text-center ">
                                                            <span class="price">
                                                                <t t-set="combination_info"
                                                                   t-value="product.product_id._get_combination_info(only_template=True, add_qty=add_qty or 1, pricelist=pricelist)"/>
                                                                <span t-if="combination_info['has_discounted_price']">
                                                                    <del>
                                                                        <span class="woocommerce-Price-amount amount">
                                                                            <t t-esc="combination_info['list_price']"
                                                                               t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                                                                        </span>
                                                                    </del>
                                                                </span>
                                                                <ins>
                                                                    <span class="woocommerce-Price-amount amount">
                                                                        <t t-esc="combination_info['price']"
                                                                           t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                                                                    </span>
                                                                </ins>
                                                            </span>
                                                        </p>
                                                    </div>
                                                </div>
                                            </a>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </section>

                        <div class="oe_structure"></div>

                        <section class="card-list">
                            <div class="container-fluid wrap">
                                <div class="row juice my-4 ">
                                    <h3>Fresh Juice</h3>
                                    <button class="btn view_more_btn ml-auto">view more</button>
                                </div>
                                <div class="row">
                                    <t t-foreach="website.get_popular_product()"
                                       t-as="product">
                                        <div class="col-lg-3 col-md-6 col-sm-6 my-5">
                                            <a t-att-href="'/shop/product/%s' % slug(product.product_id)">
                                                <div class="card h-100  card-salads">
                                                    <img t-attf-src="/website/image/product.template/{{product.product_id.id}}/image_1920"
                                                         t-att-alt="product.product_id.name"/>
                                                    <div class="card-body">
                                                        <h5 class="card-title text-center">
                                                            <t t-esc="product.product_id.name"/>
                                                        </h5>
                                                        <p class="card-para text-center text-muted">
                                                            <t t-esc="product.product_id.description"/>
                                                        </p>
                                                        <p class="card-text text-center ">
                                                            <span class="price">
                                                                <t t-set="combination_info"
                                                                   t-value="product.product_id._get_combination_info(only_template=True, add_qty=add_qty or 1, pricelist=pricelist)"/>
                                                                <span t-if="combination_info['has_discounted_price']">
                                                                    <del>
                                                                        <span class="woocommerce-Price-amount amount">
                                                                            <t t-esc="combination_info['list_price']"
                                                                               t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                                                                        </span>
                                                                    </del>
                                                                </span>
                                                                <ins>
                                                                    <span class="woocommerce-Price-amount amount">
                                                                        <t t-esc="combination_info['price']"
                                                                           t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                                                                    </span>
                                                                </ins>
                                                            </span>
                                                        </p>
                                                    </div>
                                                </div>
                                            </a>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </section>

                        <div class="oe_structure"></div>

                        <t t-foreach="website.get_half_banner()"
                           t-as="half_banner">
                            <section class="offer h-auto">
                                <div class="container-fluid wrap">
                                    <div class="offer-section">
                                        <h1 class=" text-center ">
                                            <t t-esc="half_banner.heading"/>
                                        </h1>
                                        <p class=" text-center m-0 text-muted offer-p">
                                            <t t-esc="half_banner.description"/>
                                        </p>
                                        <button class="btn view_more_btn m-3 text-white">shop now</button>
                                        <img src="/tis_fresh_foods_theme/static/src/image\22713-3-pomegranate-transparent-background-removebg-preview.png"
                                             alt="" id="pom-img1"/>
                                        <img src="/tis_fresh_foods_theme/static/src/image\134-1343677_pomegranate-png-transparent-images-pomegranate-fruit-white-background-removebg-preview.png"
                                             alt="" id="pom-img2"/>
                                        <img src="/tis_fresh_foods_theme/static/src/image\Group 62.png" alt=""
                                             id="pom-img3"/>
                                    </div>
                                </div>
                            </section>
                        </t>

                        <div class="oe_structure"></div>

                        <section>
                            <div class="container">
                                <div class="row desc m-auto">
                                    <div class="col-lg-12 text-center py-4 px-2 ">
                                        <h1 class="desc-h1">vero amus odio disnigimos</h1>
                                        <p class="text-muted  desc-p">It is a long established fact that a reader will
                                            be distracted by the readable content of a page when looking at its layout.
                                            The point of using Lorem Ipsum is that it has a more-or-less normal
                                            distribution of letters
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <div class="container">
                                <div class="row menu g-4 m-4 py-2">
                                    <t t-foreach="website.get_product_menu()"
                                       t-as="product">
                                        <div class="col-sm-12 col-md-4">
                                            <div class="menu-card d-flex align-items-center pb-4">
                                                <div class="c-img">
                                                    <img t-attf-src="/website/image/product.template/{{product.product_id.id}}/image_1920"
                                                         t-att-alt="product.product_id.name" class="card-img"
                                                         alt="..."/>
                                                </div>

                                                <div class="c-body">
                                                    <h6 class="card-title ml-3">
                                                        <t t-esc="product.product_id.name"/>
                                                    </h6>
                                                    <p class="c-text ml-3 mb-0">
                                                        <span class="price">
                                                            <t t-set="combination_info"
                                                               t-value="product.product_id._get_combination_info(only_template=True, add_qty=add_qty or 1, pricelist=pricelist)"/>
                                                            <span t-if="combination_info['has_discounted_price']">
                                                                <del>
                                                                    <span class="woocommerce-Price-amount amount">
                                                                        <t t-esc="combination_info['list_price']"
                                                                           t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                                                                    </span>
                                                                </del>
                                                            </span>
                                                            <ins>
                                                                <span class="woocommerce-Price-amount amount">
                                                                    <t t-esc="combination_info['price']"
                                                                       t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                                                                </span>
                                                            </ins>
                                                        </span>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </section>
                        <div class="oe_structure"></div>


                        <div class="oe_structure"></div>
                    </div>
                </t>
            </t>
        </field>
    </record>
    <record id="fresh_foods_homepage" model="website.page">
        <field name="url">/fresh_foods_homepage</field>
        <field name="is_homepage" eval="True"></field>
        <field name="website_published">True</field>
        <field name="view_id" ref="fresh_foods_homepage_view"/>
    </record>

</odoo>