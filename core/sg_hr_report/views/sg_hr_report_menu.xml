        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sg_hr_report.hr_payroll_summary_report_tmp</field>
    </record>

    <!-- Qweb report For: HR Bank Summary Report -->
    <record id="hr_bank_summary_report" model="ir.actions.report">
        <field name="name">HR Bank Summary Report</field>
