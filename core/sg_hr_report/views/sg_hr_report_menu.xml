        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sg_hr_report.hr_bank_summary_report_tmp</field>
    </record>

    <!-- Qweb report For: HR Cheque Summary Report -->
    <record id="cheque_hr_summary_report" model="ir.actions.report">
        <field name="name">HR Cheque Summary Report</field>
        <field name="model">view.cheque.summary.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sg_hr_report.cheque_summary_report_tmp</field>
    </record>

    <!-- Qweb report For: Payslip Voucher -->
    <record id="sg_payslip_report" model="ir.actions.report">
        <field name="name">Payslip Voucher</field>
