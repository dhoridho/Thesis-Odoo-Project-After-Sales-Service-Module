<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mrp_notification_tree" model="ir.ui.view">
        <field name="name">view.mrp.notification.tree</field>
        <field name="model">mrp.notification</field>
        <field name="arch" type="xml">
        	<tree string="Notifications">
        		<field name="branch_id"/>
        		<field name="mrp_branch_id"/>
        	</tree>
        </field>
    </record>

    <record id="view_mrp_notification_form" model="ir.ui.view">
        <field name="name">view.mrp.notification.form</field>
        <field name="model">mrp.notification</field>
        <field name="arch" type="xml">
        	<form string="Notifications">
        		<sheet>
        			<group>
        				<group>
        					<field name="name" invisible="1"/>
        					<field name="type" invisible="1"/>
        					<field name="branch_id"/>
        				</group>
        				<group>
        					<field name="is_required_mrp_branch" invisible="1"/>
        					<field name="mrp_branch_id" attrs="{'required': [('is_required_mrp_branch', '=', True)]}"/>
        				</group>
        			</group>
        			<notebook>
        				<page string="Receiver">
        					<field name="receiver_ids" mode="tree">
        						<tree string="Receiver" editable="bottom">
        							<field name="notification_id" invisible="1"/>
        							<field name="user_id"/>
        						</tree>
        					</field>
        				</page>
        			</notebook>
        		</sheet>
        	</form>
        </field>
    </record>

    <record id="action_view_mrp_email_notification" model="ir.actions.act_window">
        <field name="name">E-Mail Notification</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.notification</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('type', '=', 'email')]</field>
        <field name="context">{"default_type": "email"}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
           Create E-Mail Notifications
          </p>
        </field>
    </record>

    <record id="action_view_mrp_system_notification" model="ir.actions.act_window">
        <field name="name">System Notification</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.notification</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('type', '=', 'system')]</field>
        <field name="context">{"default_type": "system"}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
           Create System Notifications
          </p>
        </field>
    </record>

    <record id="action_view_mrp_whatsapp_notification" model="ir.actions.act_window">
        <field name="name">WhatsApp Notification</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.notification</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('type', '=', 'whatsapp')]</field>
        <field name="context">{"default_type": "whatsapp"}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
           Create WhatsApp Notifications
          </p>
        </field>
    </record>
</odoo>