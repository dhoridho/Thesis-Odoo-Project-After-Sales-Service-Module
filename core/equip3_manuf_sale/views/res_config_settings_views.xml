<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_implementor" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.implementor</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="equip3_manuf_accessright_settings.res_config_settings_view_form_implementor"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_manufacturing_plan']/ancestor::div[hasclass('content-group')]" position="after">
                <div class="content-group">
                    <div class="col-6 o_setting_box" style="margin-top: 0; padding-left: 0;">
                        <div class="o_setting_left_pane">
                            <field name="sales_to_manufacturing"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sales_to_manufacturing" string="Sales to Production"/>
                            <div class="text-muted">
                                Sales to Production
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="view_res_config_settings_sales_to_manufacturing" model="ir.ui.view">
        <field name="name">view.res.config.settings.sales.to.manufacturing</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="equip3_manuf_accessright_settings.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='mrp']" position="inside">
                <h2 attrs="{'invisible': [('sales_to_manufacturing', '=', False)]}">Sales To Production</h2>
                <div class="row mt16 o_settings_container" attrs="{'invisible': [('sales_to_manufacturing', '=', False)]}">
                    <div class="col-lg-6 col-12 o_setting_box" id="mrp_order_check_availability">
                        <div class="o_setting_left_pane">
                            <field name="check_availability"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="check_availability"/>
                            <div class="text-muted">
                                Check stock availability before sending sale order to production
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-12 o_setting_box" id="mrp_email_sales_to_manuf">
                        <div class="o_setting_left_pane">
                            <field name="send_email_so_confirm"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="send_email_so_confirm"/>
                            <div class="text-muted">
                                Will Send Email Notification when Production is created from Sales Order
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-12 o_setting_box" id="mrp_sales_to_manuf">
                        <div class="o_setting_left_pane">
                            <field name="send_system_so_confirm"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="send_system_so_confirm"/>
                            <div class="text-muted">
                                Will Send System Notification when Production is created from Sales Order
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-12 o_setting_box" id="mrp_sales_to_manuf_wa_notification">
                        <div class="o_setting_left_pane">
                            <field name="send_whatsapp_so_confirm"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="send_whatsapp_so_confirm"/>
                            <div class="text-muted">
                                Will Send WhatsApp Notification when Production is created from Sales Order
                            </div>
                        </div>
                    </div>
                </div>
                <!-- <h2 attrs="{'invisible': [('send_whatsapp_so_confirm', '=', False)]}">WhatsApp Connector</h2>
                <div class="row mt16 o_settings_container" attrs="{'invisible': [('send_whatsapp_so_confirm', '=', False)]}">
                    <div class="col-lg-6 col-12 o_setting_box" id="mrp_sales_to_manuf_wa_notification_connector">
                        <div class="mt16" attrs="{'invisible':[('send_whatsapp_so_confirm','=',False)]}">
                            <label string="Connector" for="connector_whatsapp_so_confirm"/>
                            <field name="connector_whatsapp_so_confirm" class="oe_inline" attrs="{'required':[('send_whatsapp_so_confirm','=',True)]}" />
                        </div>
                    </div>
                </div> -->
            </xpath>
        </field>
    </record>
</odoo> 