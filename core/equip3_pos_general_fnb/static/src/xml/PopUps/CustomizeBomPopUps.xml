<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="CustomizeBomPopUps" owl="1">
        <div role="dialog" class="modal-dialog customize_bom_popups">
            <Draggable>
                <div class="popup popup-textarea">
                    <header class="title drag-handle">
                        <t t-esc="props.title" />
                    </header>
                    <div class="bom-notes">
                        <label for="bom-notes">Notes</label>
                        <div class="bom-line-form">
                            <textarea id="bom-notes" 
                                t-model="state.notes"
                                name="bom-notes" rows="4" placeholder="Add note here"><t t-esc="props.bom_component_notes"/></textarea>
                        </div>
                    </div>
                    <div class="bom-component" t-att-class="configurableStatus(props.components)">
                        <t t-foreach="props.components" t-as="com">
                            <div class="bom-line" t-att-data-extra="com.is_extra?'1':'0'" t-att-data-is_configure="com.is_configurable?'1':'0'" t-att-class="configurableShowingConfigurable(com)">
                                <label for="bom-line-1"><t t-esc="display_name(com)"/></label>
                                <div class="bom-line-form">
                                    <t t-if="com.is_extra">
                                        <span>+<t t-esc="env.pos.format_currency(covertCurrency(com))"/></span>
                                        <t t-if="checkBomOptionalCheck(com)">
                                            <input type="checkbox"
                                            t-att-id="'bom-component' + com.id" 
                                            t-att-name="'bom-component' + com.id" 
                                            t-att-data-id="com.id" checked="1"/>
                                        </t>
                                        <t t-if="!checkBomOptionalCheck(com)">
                                            <input type="checkbox"
                                            t-att-id="'bom-component' + com.id" 
                                            t-att-name="'bom-component' + com.id" 
                                            t-att-data-id="com.id"/>
                                        </t>
                                    </t>
                                    <t t-else="">
                                        <t t-if="props.bom_components_select">
                                            <t t-if="checkBomOptionalCheck(com)">
                                                <input type="checkbox"
                                                t-att-id="'bom-component' + com.id" 
                                                t-att-name="'bom-component' + com.id" 
                                                t-att-data-id="com.id" checked="1"/>
                                            </t>
                                            <t t-if="!checkBomOptionalCheck(com)">
                                                <input type="checkbox"
                                                t-att-id="'bom-component' + com.id" 
                                                t-att-name="'bom-component' + com.id" 
                                                t-att-data-id="com.id"/>
                                            </t>
                                        </t>
                                        <t t-if="!props.bom_components_select">
                                            <input type="checkbox" 
                                                t-att-id="'bom-component' + com.id" 
                                                t-att-name="'bom-component' + com.id"
                                                t-att-data-id="com.id" 
                                                checked="checked"/>
                                        </t>
                                    </t>
                                </div>
                            </div>
                        </t>
                    </div>
                    <footer class="footer">
                        <div class="button cancel" t-on-click="cancel">
                            <t t-esc="props.cancelText" />
                        </div>
                        <div class="button confirm" t-on-click="confirm">
                            <t t-esc="props.confirmText" />
                        </div>
                    </footer>
                </div>
            </Draggable>
        </div>
    </t>

</templates>