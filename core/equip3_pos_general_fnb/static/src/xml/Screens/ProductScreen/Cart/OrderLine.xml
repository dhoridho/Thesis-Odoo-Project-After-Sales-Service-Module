<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="RetailOrderline2Ext" t-inherit="equip3_pos_general.RetailOrderline2" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('order-line-description')]" position="before">
            <div class='line-bom-combo order-line-bom-component' t-if="props.line.get_bom_components_display()">
                <t t-raw="props.line.get_bom_components_display()"/>
            </div>
            <div class='line-bom-combo order-line-pos-combo-option' t-if="props.line.get_pos_combo_options_display()">
                <t t-foreach="props.line.pos_combo_options" t-as="option">
                    <div class="combo-option">
                        <span><t t-esc="props.line.bom_combo_display_name(option)"/></span>
                        <t t-if="option.bom_components">
                            <t t-if="isBomComponentsConfigurable(option)">
                                <div class="edit-bom-components" t-on-click.stop="onChangeBomComponents(props.line, option)" title="Change BoM Options">
                                   <i class="fa fa-pencil" style='    font-size: 15px;'></i>
                                </div>
                            </t>
                        </t>
                    </div>
                </t>
            </div>
        </xpath>
        <xpath expr="//span[hasclass('line-product_name')]" position="after">
            <span class='line-change-combo-option' t-on-click.stop="onChangeComboAndBomOptions(props.line)" title="Change Options" t-if="isShowChangeComboAndBomOptions(props.line)">
                <i class="fa fa-edit"></i>
            </span>
        </xpath>
    </t>

</templates>
