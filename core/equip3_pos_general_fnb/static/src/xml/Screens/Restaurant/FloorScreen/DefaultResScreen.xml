<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="DefaultResScreen" t-inherit="equip3_pos_masterdata.DefaultResScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('action-buttons')]" position="inside">
            <div class='button-confirm button-confirm-dine-in' t-on-click="showFS" t-if="env.pos.config.floor_ids.length > 0">
                <i aria-hidden="true" class="fa fa-cutlery"></i><span></span>
                <span>Dine-In</span>
            </div>
            <div class='button-confirm button-confirm-dine-in' t-on-click="showFS1" t-if="env.pos.config.floor_ids.length == 0 and env.pos.config.is_table_management">
                <i aria-hidden="true" class="fa fa-cutlery"></i><span></span>
                <span>Dine-In</span>
            </div>
            <div class='button-confirm button-confirm-takeaway' t-on-click="showTAS" t-if="env.pos.config.takeaway_order">
                <i aria-hidden="true" class="fa fa-shopping-basket"></i><span></span>
                <span>Take Away</span>
            </div>
            <div class='button-confirm button-confirm-employee_meal' t-on-click="showEMS" t-if="env.pos.config.employee_meal">
                <i aria-hidden="true" class="fa fa-users"></i><span></span>
                <span>Employee Meal</span>
            </div>
        </xpath>
    </t>

</templates>
