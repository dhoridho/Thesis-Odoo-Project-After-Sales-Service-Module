<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="KitchenOrderLineDetail" t-inherit="equip3_pos_masterdata.KitchenOrderLineDetail" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('line-description')]" position="after">
            <div class='order-line-bom-component' t-if="get_bom_components_display()">
                <t t-raw="get_bom_components_display()"/>
            </div>
        </xpath>
        <xpath expr="//tr[hasclass('receipt-line')]" position="attributes">
            <attribute name="t-att-pos_combo_options">props.line.pos_combo_options and '1' or '0'</attribute>
            <attribute name="t-att-combo_line">props.line.id</attribute>
        </xpath>
    </t>

</templates>
