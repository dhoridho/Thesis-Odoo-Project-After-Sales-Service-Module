<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
	<t t-name="KitchenOrderLineComboDetail" owl="1">
        <tr class="receipt-line receipt-line-combo"
            t-att-class="{ 
                highlight: isHighlighted, oe_hidden: !allowDisplay, 
                Cancelled: isCancelled, 
                succeed_box: isSucceed, 
                'bg-danger': warningWaitingTimeDetail,
                'last_option': props.last_option,
            }">
            
            <td class="text-center td-qty" width="20%">
                <t t-esc="props.line.qty"/>X
            </td>
            <td class="text-left td-name" style="padding: 10px" width="55%">
                <ul class="combo-option-name">
                    <t t-esc="display_name(props.option)"/><br/>
                </ul>
                <ul class="info info-time" t-if="props.line.time">
                    <span class="delayed_times" t-if="props.order.state != 'Done'" style="float: left">
                        <KitchenProcessingTimes order="props.order"/>
                    </span>
                </ul>
                <div class="order-line-pos-combo-option">
                    <t t-raw="get_pos_combo_options_display(props.option)"/>
                </div>
            </td>
            <td class="text-center td-cb" width="25%">
                <input type="checkbox" t-att-id="props.option.id" class="cb-done-combo-line" 
                    t-on-click="trigger('click-doneComboLine', {option: props.option, line: props.line, order: props.order})"/>
            </td>
        </tr>
	</t>
</templates>