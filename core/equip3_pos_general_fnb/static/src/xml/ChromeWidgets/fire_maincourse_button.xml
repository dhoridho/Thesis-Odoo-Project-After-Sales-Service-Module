<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="FireMaincourseButton" owl="1">  
        <button class="button show-fire-buttons" style="border-radius: 3px" t-on-click='click'>
            Fire Main Course
        </button>
    </t>


    <t t-name="FireWidgetProductScreenSection1Ext" t-inherit="equip3_pos_general.ProductScreenSection1" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('subpads')]" position="before">
            <div class="fire-btn-sec fire-btn-sec-a">
                <FireAppetizerButton t-if="env.pos.config.enable_fire_appetizer"/>
                <FireMaincourseButton t-if="env.pos.config.enable_fire_main_course"/>
            </div>
            <div class="fire-btn-sec fire-btn-sec-b" >
                <FireDessertButton t-if="env.pos.config.enable_fire_dessert"/>
            </div>
        </xpath> 
    </t>

</templates>