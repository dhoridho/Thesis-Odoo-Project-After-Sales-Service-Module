    <record model="ir.ui.view" id="pos_config_retail_inherit">
        <field name="name">pos.config.retail.inherit</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="equip3_pos_general.pos_config_retail"/>
        <field name="arch" type="xml">
            <div name="order_printer_group" position="after">
                <div class="col-6 col-lg-6 o_setting_box"
                     id="iface_printbill"
                     attrs="{'invisible': [('module_pos_restaurant', '=', False)]}">
                    <div class="o_setting_left_pane">
                        <field name="iface_printbill"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="iface_printbill"/>
                        <span class="fa fa-lg fa-cutlery" title="For bars and restaurants" role="img" aria-label="For bars and restaurants"/>
                        <div class="text-muted">
                            Allow to print bill before payment
                        </div>
                    </div>
                </div>
                <div class="col-6 col-lg-6 o_setting_box"
                     id="iface_splitbill"
                     attrs="{'invisible': [('module_pos_restaurant', '=', False)]}">
                    <div class="o_setting_left_pane">
                        <field name="iface_splitbill"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="iface_splitbill"/>
                        <span class="fa fa-lg fa-cutlery" title="For bars and restaurants" role="img" aria-label="For bars and restaurants"/>
                        <div class="text-muted">
                            Split total or order lines
                        </div>
                    </div>
                </div>
            </div>
            <xpath expr="//field[@name='sync_multi_session_offline']" position="after">
                <field name="screen_type"
                       attrs="{'required': [('sync_multi_session', '=', True)]}"/>
            </xpath>
            <xpath expr="//field[@name='product_virtual_keyboard']" position="after">
                <field name="customize_bom"/>
            </xpath>
            <!-- <field name="kitchen_screen" position="after">
                <field name="checker_screen" attrs="{'invisible': ['|', ('sync_multi_session', '=', False), ('restaurant_order', '=', True), ('screen_type', '!=', 'cashier')]}"/>
            </field> -->
            <xpath expr="//group[@id='sync_multi_session']" position="after">
                <group string="Cashier/Waiter Screen Setting"
                       attrs="{'invisible': ['|', ('sync_multi_session', '=', False), ('restaurant_order', '=', True), ('screen_type', '!=', 'cashier')]}">
                    <field name="hide_order_screen"/>
                    <field name="checker_screen"/>
                    <field name="kitchen_screen" attrs="{'invisible': [('hide_order_screen', '!=', True)]}"/>
                    <field name="takeaway_screen" attrs="{'invisible': [('hide_order_screen', '!=', True)]}"/>
                    <field name="takeaway_order"/>
                    <field name="auto_order"/>
                    <field name="sync_manual_button"/>
                    <field name="send_order_to_kitchen"/>
                    <field name="allow_lock_table"/>
                </group>
            </xpath>

            <xpath expr="//field[@name='restaurant_order']" position="after">
                <group string="Kitchen Screen Setting"
                       attrs="{'invisible': ['|', '|', ('sync_multi_session', '=', False), ('screen_type', '!=', 'kitchen'), ('restaurant_order', '=', True)]}">
                    <field name="allow_kitchen_cancel"/>
                    <field name="period_minutes_warning"/>
                    <field name="required_input_reason_cancel"
                           attrs="{'invisible': [('allow_kitchen_cancel', '!=', True)]}"/>
                    <field name="reason_cancel_reason_ids" widget="many2many_tags"
                           attrs="{'invisible': [('required_input_reason_cancel', '!=', True)], 'required': [('required_input_reason_cancel', '=', True)]}"/>
                    <field name="display_all_product"/>
                    <field name="product_categ_ids"
                           widget="many2many_tags"
                           attrs="{'invisible': [('display_all_product', '=', True)], 'required': [('display_all_product', '!=', True)] }"/>
                </group>
            </xpath>
            <xpath expr="//page[@name='sync_session_and_restaurant']" position="after">
                <page groups="point_of_sale.group_pos_manager" string="Restaurant"
                      attrs="{'invisible': ['|','|', ('screen_type', '=', 'kitchen'), ('restaurant_order', '=', True), ('module_pos_restaurant', '=', False)]}">
                    <group>
                        <group class="restaurant_setting_extend" string="Restaurant Setting Extend">
                            <field name="allow_lock_table" string="Reservation Table"/>
                            <field name="table_reservation_list"/>
                            <field name="allow_split_table"/>
                            <field name="allow_merge_table"/>
                            <field name="required_set_guest"/>
                            <field name="set_guest"/>
                            <field name="set_guest_when_add_new_order"/>
                            <field name="allow_merge_lines"
                                   attrs="{'invisible': ['|', ('is_table_management', '=', False), ('floor_ids', '=', None)]}"/>


                            <field name="is_complementary"/>
                            <field name="complementary_journal_id"
                                attrs="{'invisible':[('is_complementary','!=',True)],
                                        'required':[('is_complementary','=',True)]}"/>
                            <field name="required_ask_seat"/>
                        </group>
                        <group string="Employee Meal">
                            <field name="employee_meal"/>
                            <field name="employee_meal_limit_budget"
                                string="Limit Budget"
                                attrs="{'invisible': [('employee_meal', '=', False)], 'required': [('employee_meal', '=', True)]}"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>