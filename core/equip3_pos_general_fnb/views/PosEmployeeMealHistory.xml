<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="pos_employee_meal_history_view_search" model="ir.ui.view">
        <field name="name">reservation.order.view.search</field>
        <field name="model">pos.employee.meal.history</field>
        <field name="arch" type="xml">
            <search>
                <field name="order_date"/>
                <field name="employee_id"/>
            </search>
        </field>
    </record>

    <record id="pos_employee_meal_history_tree_view" model="ir.ui.view">
        <field name="name">pos.employee.meal.history.tree.view</field>
        <field name="model">pos.employee.meal.history</field>
        <field name="arch" type="xml">
            <tree create="false" edit="false">
                <field name="order_date"/>
                <field name="employee_id"/>
                <field name="order_id"/>
                <field name="order_value" sum="Amount total" widget="monetary"/>
                <field name="cashier_id"/>
                <field name="company_id" optional="show" readonly="1"/>
                <field name="branch_id"  optional="show"  readonly="1"/>
            </tree>
        </field>
    </record>

    <record id="pos_employee_meal_history_form_view" model="ir.ui.view">
        <field name="name">pos.employee.meal.history.form.view</field>
        <field name="model">pos.employee.meal.history</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <sheet>
                    <group>
                        <group>
                            <field name="order_date"/>
                            <field name="employee_id"/>
                            <field name="order_id"/>
                            <field name="order_value" widget="monetary"/>
                            <field name="cashier_id"/>
                            <field name="company_id" readonly="1"/>
                            <field name="branch_id"    readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pos_employee_meal_history_action" model="ir.actions.act_window">
        <field name="name">Employee Meal History</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pos.employee.meal.history</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="pos_employee_meal_history_view_search"/>
    </record>

    <menuitem id="pos_employee_meal_history_menu"
          name="Employee Meal History"
          parent="equip3_pos_general.menu_pos_cancel_history"
          sequence="10"
          action="pos_employee_meal_history_action"/>

</odoo>