<odoo>
    <data>
        <record id="currency_invoice_revaluation_wizard_form" model="ir.ui.view">
            <field name="name">currency.invoice.revaluation.wizard.form</field>
            <field name="model">currency.invoice.revaluation</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <label for="revaluation_period_start"/>
                            <div name="period_div" class="d-flex">
                                <field name="revaluation_period_start"/>
                                <span class="oe_inline o_form_label mx-3"> - </span>
                                <field name="revaluation_period_end"/>
                            </div>

                            <label for="revaluation_date"/>
                            <div name="period_div" class="d-flex">
                                <field name="revaluation_date"/>
                            </div>

                            <label for="journal_id"/>
                            <div name="period_div" class="d-flex">
                                <field name="journal_id"/>
                            </div>

                            <label for="income_unrealized_account"/>
                                                                                                                                                 <div name="period_div" class="d-flex">
                                <field name="income_unrealized_account"/>
                            </div>

                            <label for="expense_unrealized_account"/>
                            <div name="period_div" class="d-flex">
                                <field name="expense_unrealized_account"/>
                            </div>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Validate" name="validate" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
               </form>
            </field>
        </record>

        <record id="currency_invoice_revaluation_wizard_action" model="ir.actions.act_window">
            <field name="name">AP/AR Currency Revaluation</field>
            <field name="res_model">currency.invoice.revaluation</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="currency_invoice_revaluation_wizard_form"/>
            <field name="target">new</field>
        </record>

        <menuitem action="currency_invoice_revaluation_wizard_action" id="menu_currency_invoice_revaluation" parent="account.menu_finance_entries_accounting_miscellaneous"/>
    </data>
</odoo>
    