<odoo>
    <data>
        <record id="account_payment_register_view_inherit" model="ir.ui.view">
            <field name="name">account.payment.register.view.form.inherit</field>
            <field name="model">account.payment.register</field>
            <field name="inherit_id" ref="sr_manual_currency_exchange_rate.sr_view_account_payment_register_invoice_form_extends_add_manual_currency_exchange_rate"/>
            <field name="arch" type="xml">
                
                <xpath expr="//field[@name='communication']" position="after">
                    <field name="is_same_main_currency" invisible="1"/>
                    <field name="current_rate_id" attrs="{'invisible': [('is_same_main_currency', '=', True)]}" readonly="1"/>
                    <field name="current_inverse_rate_id" attrs="{'invisible': [('is_same_main_currency', '=', True)]}"/>
                </xpath>

                <field name="manual_currency_exchange_rate" position="attributes">
                    <attribute name="string">Spot Rate</attribute>
                </field>

                <field name="manual_currency_exchange_rate" position="attributes">
                    <attribute name="attrs">{'invisible': ['|',('apply_manual_currency_exchange', '=', False),('active_manual_currency_rate', '=', False)],'required':[('apply_manual_currency_exchange', '=', True)]}</attribute>
                </field>

                <field name="manual_currency_exchange_rate" position="before">
                    <field name="manual_currency_exchange_inverse_rate" string='Inverse Rate' attrs="{'invisible': ['|',('apply_manual_currency_exchange', '=', False),('active_manual_currency_rate', '=', False)],'required':[('apply_manual_currency_exchange', '=', True)]}"/>
                </field>

                <field name="manual_currency_exchange_rate" position="after">
                    <field name="exchange_spot_rate" attrs="{'invisible': ['|',('apply_manual_currency_exchange', '=', False),('active_manual_currency_rate', '=', False)],'required':[('apply_manual_currency_exchange', '=', True)]}"/>
                </field>

                <field name="active_manual_currency_rate" position="attributes">
                    <attribute name="attrs"></attribute>
                    <attribute name="string">Spot Rate</attribute>
                    <attribute name="invisible">0</attribute>
                    <attribute name="attrs">{'invisible': [('is_same_main_currency', '=', True)]}</attribute>
                </field>

                <field name="apply_manual_currency_exchange" position="attributes">
                    <attribute name="attrs"></attribute>
                    <attribute name="string">Spot Rate</attribute>
                    <attribute name="invisible">1</attribute>
                </field>

                <!-- <field name="manual_currency_exchange_rate" position="attributes">
                    <attribute name="attrs">{'invisible': ['|',('apply_manual_currency_exchange', '=', False),('active_manual_currency_rate', '=', False)],'required':[('apply_manual_currency_exchange', '=', True)]}</attribute>
                </field>

                <field name="active_manual_currency_rate" position="attributes">
                    <attribute name="attrs"></attribute>
                    <attribute name="invisible">0</attribute>
                    <attribute name="string">Spot Rate</attribute>
                </field>

                <field name="apply_manual_currency_exchange" position="attributes">
                    <attribute name="attrs"></attribute>
                    <attribute name="invisible">1</attribute>
                </field> -->

            </field>
        </record>



    </data>
</odoo>
    