<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
    	<record id="view_current_rate_move_form" model="ir.ui.view">
            <field name="name">view_current_rate_move_form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='other_info']/group/group[@name='accounting_info_group']/field[@name='to_check']" position="after">
                    <field name="is_company_curr" invisible='1'/>
                    <field name="inverse_rate_visible" invisible='1'/>
                    <field name="current_rate" attrs="{'invisible': [('is_company_curr', '=', True)]}"  force_save="1"/>
                    <field name="current_inverse_rate" attrs="{'invisible': [('inverse_rate_visible', '=', False)]}"  force_save="1"/>
                    <field name="amount_residual" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    <field name="currency_id" invisible="1"/>
                </xpath>
                <xpath expr="//page[@name='other_info']/group/group[3]" position="after">
                    <group string="Tax Information Rates" name="tax_info_rate_group">
                        <field name="tax_rate" force_save="1"/>
                        <field name="taxes_base_price" force_save="1"/>
                        <field name="sales_times_tax_rate" force_save="1"/>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="view_currency_revaluation_wizard_form" model="ir.ui.view">
            <field name="name">view_currency_revaluation_wizard_form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/field[@name='id']" position="before">
                    <field name="currency_revaluation_id" invisible="1"/>
                    <field name="amount_residual" invisible="1"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="exchange_ids" invisible="1"/>
                </xpath>

                <xpath expr="//sheet/div[@name='button_box']" position="inside">
                    <button name="button_view_revaluation" type="object" class="oe_stat_button" icon="o-hm-smart-all-asset-revaluation" attrs="{'invisible': [('currency_revaluation_count','=', 0)]}">
                            <field name="currency_revaluation_count"/>
                            <span>Currency Revaluation</span>
                        </button>

                    <button name="button_view_exchange_journal" type="object" class="oe_stat_button" icon="o-hm-smart-all-asset-revaluation" attrs="{'invisible': [('exchange_ids', '=', False)]}">
                        <!-- <field name="currency_revaluation_count"/>  attrs="{'invisible': [('exchange_ids', '=', False)]}"-->
                        <span>Journal Exchange</span>
                    </button>
                </xpath>

                <xpath expr="//sheet/div[@name='button_box']/button[@name='open_reconcile_view']" position="replace">
                    <button name="open_reconcile_view" class="oe_stat_button" icon="o-hm-smart-hrm-reconcile" type="object" attrs="{'invisible': ['|', '|', ('move_type', '!=', 'entry'), ('id', '=', False), ('has_reconciled_entries', '=', False)]}" string="Reconciled Entries">
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>