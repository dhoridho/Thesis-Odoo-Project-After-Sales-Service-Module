<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_currency_tax_search" model="ir.ui.view">
            <field name="name">res.currency.tax.search</field>
            <field name="model">res.currency.tax</field>
            <field name="arch" type="xml">
                <search string="Currency Rates">
                    <field name="name" string="Date"/>
                </search>
            </field>
        </record>

        <record id="view_currency_tax_tree" model="ir.ui.view">
            <field name="name">res.currency.tax.tree</field>
            <field name="model">res.currency.tax</field>
            <field name="arch" type="xml">
                <tree string="Currency Rates" editable="bottom">
                    <field name="name"/>
                    <field name="conversion"/>
                    <field name="mr_rate" string="Rate"/>
                    <field name="rate" digits="[12,12]"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>

        <record id="view_currency_tax_form" model="ir.ui.view">
            <field name="name">res.currency.tax.form</field>
            <field name="model">res.currency.tax</field>
            <field name="arch" type="xml">
                <form string="Currency Rate">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="rate" digits="[12,12]"/>
                            </group>
                            <group>
                                <field name="currency_id"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="act_view_currency_tax_rates" model="ir.actions.act_window">
            <field name="name">Tax Currency Rates</field>
            <field name="res_model">res.currency.tax</field>
            <field name='view_mode'>tree,form</field>
            <field name='view_id' ref='view_currency_tax_tree'/>
            <field name="domain">[('currency_id','=', active_id)]</field>
            <field name="context">{'default_currency_id': active_id}</field>
        </record>

        <record id="mr_view_currency_tax_form" model="ir.ui.view">
            <field name="name">mr_view_currency_tax_form</field>
            <field name="model">res.currency</field>
            <field name="inherit_id" ref="base.view_currency_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='active']" position="before">
                    <field name="is_taxes_rate" invisible="1"/>
                    <!-- <field name="hide_taxes_rate" invisible="1"/>
                    <field name="hide_tax_conversion" invisible="1"/> -->
                    <!-- <field name="tax_rate" attrs="{'invisible': [('hide_taxes_rate', '=', True)]}"/> -->
                    <!-- <field name="tax_conversion" attrs="{'invisible': [('hide_tax_conversion', '=', True)]}"/> -->
                    <field name="tax_rate"/>
                    <field name="tax_conversion"/>
                </xpath>

                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button"
                        id="mr_tax_rate_button"
                        string="Tax Rates" type="action"
                        name="%(act_view_currency_tax_rates)d"
                        icon="fa-money" widget="statinfo"
                        attrs="{'invisible': [('is_taxes_rate', '=', False)]}"/>
                </xpath>
            </field>
        </record>

        <record id="view_currency_log_api_tree" model="ir.ui.view">
            <field name="name">currency.log.api.tree</field>
            <field name="model">currency.log.api</field>
            <field name="arch" type="xml">
                <tree string="Currency Log API" decoration-danger="response=='Failed'" editable="bottom">
                    <field name="name"/>
                    <field name="url_get"/>
                    <field name="create_date"/>
                    
                    
                    <field name="remarks"/>
                    <field name="response"/>
                    
                </tree>
            </field>
        </record>

        <record id="act_currency_log_api_tree" model="ir.actions.act_window">
            <field name="name">Currency Log Api</field>
            <field name="res_model">currency.log.api</field>
            <field name='view_mode'>tree,form</field>
            <field name='view_id' ref='view_currency_log_api_tree'/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem
            id="unused_menu"
            name="Currency API Log"
            parent="base.menu_custom"
            sequence="49"
            action="equip3_accounting_multicurrency.act_currency_log_api_tree"
            groups="base.group_system"
        />




    </data>
</odoo>
