<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_res_company_settings_account_inherit" model="ir.ui.view">
            <field name="name">view.res.company.setting.account.inherit</field>
            <field name="model">res.config.settings</field>
            <!-- <field name="inherit_id" ref="equip3_accounting_accessright_setting.res_config_settings_view_form"/> -->
            <field name="inherit_id" ref="equip3_accounting_accessright_setting.res_config_settings_view_form_accessright_setting"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='mr_taxes_rate']" position="after">
                    <!-- <label for="is_call_bi_api" class="col-lg-3 o_light_label"/>
                    <field name="is_call_bi_api"/> -->

                    <div class="col-12 col-lg-6 o_setting_box" id="bi_api" attrs="{'invisible': [('group_multi_currency', '=', False)]}">
                        <div class="o_setting_left_pane">
                            <field name="is_call_bi_api" string="Use BI API"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_call_bi_api"/>
                            <div class="text-muted" id="bi_api_info">
                                Get Currency from BI (Bank Indonesia)
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box"></div>
                    <div class="col-12 col-lg-6 o_setting_box" id="type_bi_api" attrs="{'invisible': [('is_call_bi_api', '=', False)]}">
                        <div class="o_setting_right_pane">
                            <label for="type_bi_currency" />
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="type_bi_currency" class="o_light_label" widget="radio" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <field name="is_taxes_rate" invisible="1"/>
                    <label for="is_call_kemenkeu_api" attrs="{'invisible': [('is_taxes_rate', '=', False)]}" class="col-lg-3 o_light_label"/>
                    <field name="is_call_kemenkeu_api" attrs="{'invisible': [('is_taxes_rate', '=', False)]}"/>
                    <label for="token_kemenkeu_api" attrs="{'invisible': [('is_taxes_rate', '=', False)]}" class="col-lg-3 o_light_label"/>
                    <field  attrs="{'invisible': [('is_taxes_rate', '=', False)], 'required' : [('is_call_kemenkeu_api', '=', True)]}" name="token_kemenkeu_api"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
