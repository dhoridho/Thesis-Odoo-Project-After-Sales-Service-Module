<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_voucher_form" model="ir.ui.view">
            <field name="name">account.voucher.form</field>
            <field name="model">account.voucher</field>
            <field name="inherit_id" ref="aos_account_voucher.view_voucher_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group/group" position="inside">
                    <field name="invisible_manual_currency" invisible='1'/>
                    <field name="invisible_conversion" invisible='1'/>
                    <field name="apply_manual_currency_exchange" attrs="{'invisible': [('invisible_manual_currency', '=', True)]}"/>
                    <field name="manual_currency_exchange_inverse_rate" attrs="{'invisible': [('invisible_conversion', '=', True)]}"/>
                    <field name="manual_currency_exchange_rate" force_save='1' attrs="{'invisible': [('apply_manual_currency_exchange', '=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>