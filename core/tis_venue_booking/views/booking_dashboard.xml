<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="assets_backends" name="sales assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <script type="text/javascript"
                    src="/tis_venue_booking/static/src/js/venue_booking_dashboard.js"/>
            <script type="text/javascript" src="/tis_venue_booking/static/lib/charts/Chart.min.js"/>
            <script type="text/javascript" src="/tis_venue_booking/static/lib/charts/Chart.bundle.min.js"/>
            <link rel="stylesheet" href="/tis_venue_booking/static/src/css/style1.css"/>
        </xpath>
    </template>

    <template id="tis_venue_style" name="TIS venue style" inherit_id="website.assets_frontend">
        <xpath expr="." position="inside">
        </xpath>
    </template>

    <record id="action_booking_dashboard" model="ir.actions.client">
        <field name="name">Dashboard</field>
        <field name="tag">venue_booking_dashboard</field>
    </record>

    <menuitem id="dashboard_booking"
              name="Dashboard"
              action="action_booking_dashboard"
              parent="venue_menu_root"
              sequence="1" groups="tis_venue_booking.group_venue_manager"/>

</odoo>
