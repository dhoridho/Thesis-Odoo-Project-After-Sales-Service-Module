<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <menuitem name="Venue Booking"
              id="venue_booking_menu_root"
              parent="website.menu_website_configuration"
              sequence="1"
              groups="group_venue_manager"/>
    <!--outer banner-->

    <record id="action_venue_booking_banner" model="ir.actions.act_window">
        <field name="name">Home Banners</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">banner.banner</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>
                Create Banner
            </p>
        </field>
    </record>

    <menuitem action="action_venue_booking_banner" id="venue_booking_banner" name="Home Banners"
              parent="tis_venue_booking.venue_booking_menu_root" sequence="1"/>

    <record id="venue_banner_tree" model="ir.ui.view">
        <field name="name">venue.banner.tree</field>
        <field name="model">banner.banner</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="header"/>
            </tree>
        </field>
    </record>

    <record id="venue_banner_form" model="ir.ui.view">
        <field name="name">venue.banner.form</field>
        <field name="model">banner.banner</field>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="header"/>
                        </group>
                        <group>
                            <field name="image" widget="image" class="oe_avatar oe_left" required="1"/>
                        </group>
                        <group string="Description">
                            <field name="description" nolabel="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="banner_tree" model="ir.ui.view">
        <field name="name">banner.tree</field>
        <field name="model">banner.banner</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!--outer banner ends-->


</odoo>