<?xml version="1.0" encoding="utf-8"?>
<odoo>



    <!--Booking Excel report action to wizard-->
    <record id="action_view_report_booking_wizard" model="ir.actions.act_window">
        <field name="name">Venue Booking Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">reporting.wizard</field>
        <field name="view_mode">form,tree</field>
        <field name="target">new</field>
    </record>


    <!-- Reporting Menu-->
    <menuitem id="venue_reporting_menu"
              name="Reporting"
              parent="venue_menu_root"
              sequence="4"
              groups="group_venue_user"/>
    <menuitem id="venue_booking_analysis_pivot"
              name="Booking Analysis"
              parent="venue_reporting_menu"
              action="action_booking_pivot_analysis_reporting"
              sequence="2"
              groups="group_venue_user"/>
    <menuitem id="venue_reporting_reporting_menu"
              name="Venue Booking Report"
              parent="venue_reporting_menu"
              sequence="3"
              action="action_view_report_booking_wizard"
              groups="group_venue_user"/>
</odoo>