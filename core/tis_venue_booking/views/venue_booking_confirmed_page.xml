<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="venue_confirmed_page_template">
        <t t-call="website.layout">
            <div class="oe_structure oe_empty"/>
            <div class="bg-red font-robo" style="padding-top:4%;padding-bottom:4%;">
                <div class="container">
                    <div class="card card-2"
                         style="border: none;padding: 49px;box-shadow: 0 0 13px 0 #cccccc40, 0px 14px 0px #00800091">
                        <div class="card-body" style="text-align: center;">
                            <t t-foreach="booking_details" t-as="b">
                                <h2 class="title"
                                    style="font-size: 41px;color: #353535;border-bottom: 1px solid #cccccc36;padding-bottom: 20px;">
                                    Booking ID:
                                    <t t-esc="b.name"/>
                                </h2>
                                <h4>
                                    <p style="color:green; padding-bottom:4%;font-size: 40px;">Your Booking Request is Successfull</p>
                                </h4>

                                <h5>
                                    <p class="mb-3">Venue Charge :
                                        <span t-esc="b.venue_booking_charge"/>
                                        <span t-esc="b.currency_id.symbol"/>
                                    </p>
                                    <p class="mb-3">Additional Charge :
                                        <span t-esc="b.additional_booking_charge"/>
                                        <span t-esc="b.currency_id.symbol"/>
                                    </p>
                                    <p class="mb-3">Extra Amenities Charge :
                                        <span t-esc="b.amenities_amount_untaxed"/>
                                        <span t-esc="b.currency_id.symbol"/>
                                    </p>
                                    <p class="mb-3">Tax:
                                        <span t-esc="b.total_tax"/>
                                        <span t-esc="b.currency_id.symbol"/>
                                    </p>
                                    <p class="mb-3">Total :
                                        <span t-esc="b.amount_total"/>
                                        <span t-esc="b.currency_id.symbol"/>
                                    </p>
                                </h5>
                                <a t-att-href="b.get_portal_url(report_type='pdf', download=True)">
                                    <button style="margin-top: 13px;border: 1px solid #000;padding: 4px 23px;border-radius: 6px;">
                                        Download
                                        <i class="fa fa-download"></i>
                                    </button>
                                </a>
                            </t>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="venue_canceled_page_template">
        <t t-call="website.layout">
            <div class="oe_structure oe_empty"/>
            <div class="bg-red font-robo" style="padding-top:4%;padding-bottom:4%;">
                <div class="container">
                    <div class="card card-2"
                         style="border: none;padding: 49px;box-shadow: 0 0 13px 0 #cccccc40, 0px 14px 0px #ff0000b8">
                        <div class="card-body" style="text-align: center;">
                            <h2 class="title"
                                style="font-size: 41px;color: #353535;border-bottom: 1px solid #cccccc36;padding-bottom: 20px;">
                                Your Booking Status
                            </h2>
                            <h4>
                                <p style="color:red; padding-bottom:4%;font-size: 40px;">Booking Request Failed</p>
                            </h4>
                            <h2 style="color:#353561;font-size: 17px;font-weight: 200;max-width: 56%;margin: auto;line-height: 26px;">
                                We are sorry, the Venue is already booked for the date,
                                please try another date without hesitation and have more fun.
                            </h2>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
