                    <h2>Down Payment</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Down Payments</span>
                                <div class="text-muted">
                                    Product used for down payments
                                </div>
                                <div class="text-muted">
                                    <field name="down_payment_product_id"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Venues &amp; Amenities</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Venue Product</span>
                                <div class="text-muted">
                                    Product for venue to be used for Invoicing
                                </div>
                                <div class="text-muted">
                                    <field name="venue_product_id"/>
                                </div>

                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Amenities Product</span>
                                <div class="text-muted">
                                    Product for Amenities to be used for Invoicing
                                </div>
                                <div class="text-muted">
                                    <field name="amenities_product_id"/>
                                </div>

                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Additional Charge Product</span>
                                <div class="text-muted">
                                    Product for Additional Charge to be used for Invoicing
                                </div>
                                <div class="text-muted">
                                    <field name="additional_charge_product_id"/>
                                </div>

                            </div>
                        </div>
                    </div>
