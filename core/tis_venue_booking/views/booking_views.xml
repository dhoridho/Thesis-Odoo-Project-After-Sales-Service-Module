<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Venue Bookings Form View-->
    <record id="venue_booking_form_view_new" model="ir.ui.view">
        <field name="name">venue.booking.form.new</field>
        <field name="model">booking.booking</field>
        <field name="arch" type="xml">
            <form string="Booking">

                <header>
                    <button name="action_confirm_booking" string="Confirm"
                            type="object"
                            class="oe_highlight"
                            attrs="{'invisible':[('state','!=','draft')]}"/>
                    <button name="%(tis_venue_booking.booking_cancellation_action)d" string="Cancel"
                            type="action" attrs="{'invisible': [('state', '=', 'cancel')]}"/>
                    <button name="print_booking_order" type="object" string="Print"
                            attrs="{'invisible': [('state', '!=', 'confirm')]}" class="oe_highlight"/>
                    <button name="print_booking_order" type="object" string="Print"
                            attrs="{'invisible': [('state', 'not in', ('draft', 'cancel'))]}"/>
                    <button name="action_booking_confirmation_send" type="object" string="Send Confirmation Mail"
                            class="oe_highlight"
                            attrs="{'invisible': [('state', '!=', 'confirm')]}"/>
                    <field name="invoice_status" invisible="1"/>
                    <button name="%(tis_venue_booking.booking_invoicing_action)d" string="Create Invoice"
                            type="action" class="oe_highlight"
                            attrs="{'invisible': ['|', ('state', '!=', 'confirm'), ('invoice_status', '=', 'invoiced')]}"
                    />
                    <button name="reset_to_enquiry" type="object" string="Reset to Enquiry" class="oe_highlight"
                            attrs="{'invisible': [('state', 'in', ['draft','cancel'])]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_invoice"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-pencil-square-o"
                                attrs="{'invisible': [('invoice_count', '=', 0)]}">
                            <field name="invoice_count" widget="statinfo" string="Invoices"/>
                        </button>
                        <button name="send_whatsapp_msg" string="Send via WhatsApp" type="object" icon="fa-whatsapp"
                                class="oe_stat_button"/>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="currency_id" invisible="1"/>
                            <field name="partner_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="venue_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="booking_type" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <label for="booking_charge"/>
                            <div>
                                <field name="booking_charge" class="oe_inline"/>
                                <span attrs="{'invisible': ['|',('booking_type', '=', 'hourly'),('booking_type', '=', ' ')]}"
                                      class="oe_inline">/ Day
                                </span>
                                <span attrs="{'invisible': ['|',('booking_type', '=', 'day'),('booking_type', '=', ' ')]}"
                                      class="oe_inline">/ Hour
                                </span>
                            </div>
                            <label for="additional_charge"/>
                            <div>
                                <field name="additional_charge" class="oe_inline"/>
                                <span attrs="{'invisible': ['|',('booking_type', '=', 'hourly'),('booking_type', '=', ' ')]}"
                                      class="oe_inline">/ Day
                                </span>
                                <span attrs="{'invisible': ['|',('booking_type', '=', 'day'),('booking_type', '=', ' ')]}"
                                      class="oe_inline">/ Hour
                                </span>
                            </div>
                        </group>
                        <group>
                            <field name="confirmation_date"
                                   attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('state', '!=', 'confirm')]}"/>
                            <field name="from_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="to_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <!--                            <field name="analytic_account_id" groups="analytic.group_analytic_accounting"/>-->

                            <field name="days" attrs="{'invisible': [('booking_type', '=', 'hourly')]}"/>
                            <field name="days_count" invisible="1"/>
                            <field name="total_hours" attrs="{'invisible': [('booking_type', '=', 'day')]}"
                                   widget="float_time"/>
                            <field name="venue_tax_ids" widget="many2many_tags"/>
                            <field name="analytic_account_id" groups="analytic.group_analytic_accounting"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Extra Amenities">
                            <field name="booking_amenities_ids"
                                   mode="tree" attrs="{'readonly': [('state', '!=', 'draft')]}">
                                <tree string="Extra Amenities Lines"
                                      editable="bottom">
                                    <field name="state" invisible="1"/>
                                    <field name="fl" invisible="1"/>
                                    <field name="ref_venue_id" invisible="1"/>
                                    <!--                                    <field name="booking_id.days_count" invisible="1"/>-->
                                    <field name="currency_id" invisible="1"
                                           attrs="{'readonly': ['|',('state', '!=', 'draft'),('fl','=',True)]}"/>
                                    <field name="amenities_id" required="1"
                                           attrs="{'readonly': ['|',('state', '!=', 'draft'),('fl','=',True)]}"
                                           options="{'no_create': True}" domain="[('venue_id','=',ref_venue_id),('type','=','additional')]"/>
                                    <!--                                    domain="[('venue_id','=',ref_venue_id)]"-->
                                    <field name="types" readonly="1"/>
                                    <field name="quantity"
                                           attrs="{'readonly': ['|',('state', '!=', 'draft'),('fl','=',True)]}"/>
                                    <field name="price"
                                           options="{'currency_field': 'currency_id'}"
                                           attrs="{'readonly': ['|',('state', '!=', 'draft'),('fl','=',True)]}"/>
                                    <field name="duration"
                                           attrs="{'readonly': ['|',('state', '!=', 'draft'),('fl','=',True)]}"/>
                                    <field name="taxes"
                                           widget="many2many_tags"
                                           attrs="{'readonly': ['|',('state', '!=', 'draft'),('fl','=',True)]}"/>
                                    <field name="price_subtotal"
                                           options="{'currency_field': 'currency_id'}"
                                           attrs="{'readonly': ['|',('state', '!=', 'draft'),('fl','=',True)]}"/>

                                </tree>
                                <form string="Amenities">
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="state" invisible="1"/>
                                                <field name="fl" invisible="1"/>
                                                <field name="amenities_id"
                                                       attrs="{'readonly': ['|',('state', '!=', 'draft'),('fl','=',True)]}"
                                                />
                                                <field name="types"
                                                       attrs="{'readonly': ['|',('state', '!=', 'draft'),('fl','=',True)]}"/>
                                                <field name="quantity"
                                                       attrs="{'readonly': ['|',('state', '!=', 'draft'),('fl','=',True)]}"/>
                                                <field name="currency_id" invisible="1"/>
                                            </group>
                                            <group>
                                                <field name="price" widget="monetary"
                                                       options="{'currency_field': 'currency_id'}"
                                                       attrs="{'readonly': ['|',('state', '!=', 'draft'),('fl','=',True)]}"/>
                                                <field name="taxes" widget="many2many_tags"
                                                       attrs="{'readonly': ['|',('state', '!=', 'draft'),('fl','=',True)]}"/>
                                                <field name="price_subtotal"
                                                       attrs="{'readonly': ['|',('state', '!=', 'draft'),('fl','=',True)]}"/>

                                            </group>
                                        </group>

                                    </sheet>
                                </form>
                            </field>
                            <group>
                            <group>
                                <field name="narration" placeholder="Add a note"
                                        nolabel="1"/>
                            </group>

                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                <field name="venue_booking_charge" widget='monetary'
                                       options="{'currency_field': 'currency_id'}"/>
                                <field name="additional_booking_charge" widget='monetary'
                                       options="{'currency_field': 'currency_id'}"/>
                                <field name="amenities_amount_untaxed" widget='monetary'
                                       options="{'currency_field': 'currency_id'}"/>
                                <field name="total_tax" widget='monetary'
                                       options="{'currency_field': 'currency_id'}"/>
                                <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                    <label for="amount_total"/>
                                </div>
                                <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator"
                                       widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                <field name="down_payment_amount" string="Payment Received"
                                       widget="monetary"/>
                                <field name="total_amount_due" string="Amount Due"
                                       widget="monetary"/>

                            </group>
                            </group>


                        </page>
                        <page string="Customer Info" name="customer_info">
                            <group>
                                <group>
                                    <field name="partner_name" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    <label for="street" string="Address"/>
                                    <div class="o_address_format">
                                        <field name="street" placeholder="Street..." class="o_address_street"
                                               attrs="{'readonly': [('state', '!=', 'draft')]}"
                                               widget="gplaces_autocomplete"/>
                                        <field name="street2" placeholder="Street 2..." class="o_address_street"
                                               attrs="{'readonly': [('state', '!=', 'draft')]}"
                                               widget="gplaces_autocomplete"/>
                                        <field name="city" placeholder="City" class="o_address_city"
                                               attrs="{'readonly': [('state', '!=', 'draft')]}"
                                               widget="gplaces_autocomplete"/>
                                        <field name="state_id" class="o_address_state" placeholder="State"
                                               options='{"no_open": True}'
                                               attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="zip" placeholder="ZIP" class="o_address_zip"
                                               attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="country_id" placeholder="Country" class="o_address_country"
                                               options='{"no_open": True, "no_create": True}'
                                               attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    </div>
                                </group>
                                <group>

                                    <field name="phone" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                                    <label for="mobile"/>
                                    <div class="o_row">
                                        <field name="mobile" widget="phone"
                                               attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                                        <button
                                                type="object"
                                                name="send_whatsapp_msg_link"
                                                class="btn-sm btn-link mb4 fa fa-whatsapp"
                                                aria-label="Send WhatsApp Message"
                                                title="Send WhatsApp Message"
                                                style="color:green;font-size: 15px;"
                                                attrs="{'invisible':[('mobile', '=', False)]}"
                                                context="{'field_name': 'mobile'}"
                                        />
                                    </div>
                                    <field name="email_from" widget="email"
                                           attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                                    <field name="website" widget="url"
                                           attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                                </group>
                            </group>
                        </page>
                        <page string="Lost Reason" name="booking_lost_reason"
                              attrs="{'invisible':[('state', '!=', 'cancel')], 'readonly': [('state', '=', 'confirm')]}">
                            <group>
                                <field name="lost_reason" readonly="1"/>
                                <field name="description" readonly="1"/>
                            </group>

                        </page>

                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!--Venue Bookings Tree View-->
    <record id="view_venue_booking_tree" model="ir.ui.view">
        <field name="name">view.venue.booking.tree</field>
        <field name="model">booking.booking</field>
        <field name="arch" type="xml">
            <tree string="Venue Bookings" decoration-danger="state == 'cancel'">
                <field name="name"/>
                <field name="partner_name"/>
                <field name="venue_id"/>
                <field name="from_date"/>
                <field name="to_date"/>
                <!--                <field name="amount_total"/>-->
                <!--                <field name="total_amount_due"/>-->
                <field name="state"/>
                <field name="invoice_status"/>

            </tree>
        </field>
    </record>
    <!--Kanban view for Bookings-->
    <record id="view_bookings_kanban" model="ir.ui.view">
        <field name="name">view.bookings.kanban</field>
        <field name="model">booking.booking</field>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="venue_id"/>
                <field name="partner_name"/>
                <field name="from_date"/>
                <field name="to_date"/>
                <field name="phone"/>
                <field name="mobile"/>
                <field name="email_from"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                            <div>
                                <strong class="o_kanban_record_title">
                                    <span>
                                        <strong style="font-size:20px;">
                                            <field name="venue_id"/>
                                        </strong>
                                    </span>
                                </strong>
                            </div>
                            <div>
                                <span class="o_kanban_record_subtitle">
                                    <strong style="font-size:15px;">
                                        <field name="name"/>
                                    </strong>
                                </span>
                            </div>
                            <div>
                                <span class="o_kanban_record_subtitle">
                                    <strong style="font-size:15px;">
                                        <field name="partner_name"/>
                                    </strong>
                                </span>
                            </div>
                            <div>
                                <strong>

                                    <field name="from_date"/>
                                    -
                                    <field name="to_date"/>
                                </strong>
                            </div>
                            <br/>
                            <div>
                                <div class="oe_kanban_bottom_right float-left" t-if="record.mobile.raw_value">
                                    <a href="#" name="send_whatsapp_msg" type="object" string="Active booking">
                                        <i class="fa fa-whatsapp" aria-label="" title=""
                                           style="color:green;font-size: 20px;"/>
                                        <span class="hidden-lg hidden-xl"></span>
                                    </a>
                                </div>
                                Phone:
                                <field string="Phone" name="phone"/>
                                <br/>
                                Email:
                                <field name="email_from"/>
                            </div>
                            <div class="oe_kanban_bottom_right float-right">
                                <field name="state" widget="label_selection"
                                       options="{'classes': {'draft': 'warning', 'cancel': 'danger','confirm': 'success'}}"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <!--calendar View-->
    <record id="booking_calendar_view" model="ir.ui.view">
        <field name="name">booking.calendar.view</field>
        <field name="model">booking.booking</field>
        <field name="priority" eval="2"/>
        <field name="arch" type="xml">
            <calendar string="Bookings" date_start="from_date" date_stop="to_date" mode="month" color="state">
                <field name="name"/>
                <field name="venue_id"/>
                <field name="partner_name"/>
            </calendar>
        </field>
    </record>
    <!-- Search, Filters and Group by for bookings-->
    <record id="view_bookings_filter" model="ir.ui.view">
        <field name="name">view.bookings.filter</field>
        <field name="model">booking.booking</field>
        <field name="priority" eval="15"/>
        <field name="arch" type="xml">
            <search string="Search Bookings">
                <field name="name" string="Booking" filter_domain="[('name','ilike',self)]"/>
                <field name="venue_id" string="Venue" filter_domain="[('venue_id','ilike',self)]"/>
                <field name="partner_id" string="Customer"
                       filter_domain="['|','|',('partner_name','ilike',self),('partner_id','ilike',self),('partner_id','child_of',self)]"/>
                <filter string="Upcoming Bookings" domain="[('from_date', '>=', context_today().strftime('%Y-%m-%d'))]"
                        name="upcoming_bookings"/>
                <separator/>
                <filter string="Booked" domain="[('state', '=', 'draft')]" name="booked"/>
                <filter string="Confirmed" domain="[('state', '=', 'confirm')]" name="confirmed"/>
                <filter string="Cancelled" domain="[('state', '=', 'cancel')]" name="cancelled"/>
                <separator/>
                <!--                <separator/>-->
                <!--&lt;!&ndash;                <filter string="Due Payments" domain="[('total_amount_due', '>', 0)]" name="due_payments"/>&ndash;&gt;-->
                <!--                <separator/>-->
                <filter string="This Month" name="month"
                        domain="[('from_date','&lt;=',(datetime.date.today()+relativedelta(day=31)).strftime('%Y-%m-%d')),
                        ('from_date','&gt;=',(datetime.date.today()-relativedelta(day=1)).strftime('%Y-%m-%d'))]"/>
                <filter string="Last 3 Months" name="last_three_month"
                        domain="[('from_date','&gt;=',(context_today()-relativedelta(months=3)).strftime('%Y-%m-01')),
                        ('from_date','&lt;',time.strftime('%Y-%m-01'))]"/>

                <group expand="0" string="Group By">
                    <filter string="Venue" name="venue" domain="[]" context="{'group_by':'venue_id'}"/>
                    <filter name="customer" string="Customer" domain="[]" context="{'group_by':'partner_id'}"/>
                    <filter string="Booking Type" name="type" domain="[]" context="{'group_by':'booking_type'}"/>
                    <filter string="Status" name="booking_status" domain="[]" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!--Action for Booking Venue-->
    <record id="action_booking_venue" model="ir.actions.act_window">
        <field name="name">Confirmed Bookings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">booking.booking</field>
        <field name="view_mode">calendar,tree,form,kanban,gantt</field>
        <field name="context">{'search_default_upcoming_bookings': 1}</field>
        <field name="domain">[('state','in',('confirm','cancel'))]</field>
    </record>

    <record id="action_enquiry_venue" model="ir.actions.act_window">
        <field name="name">Booking Enquiries</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">booking.booking</field>
        <field name="view_mode">calendar,tree,form,kanban,gantt</field>
        <field name="context">{'search_default_upcoming_bookings': 1}</field>
        <field name="domain">[('state','=','draft')]</field>
    </record>


    <!--  Booking Menu- Check Availability-->


    <!-- Booking Menu- Booking-->
    <menuitem id="booking_sub_menu"
              name="Booking"
              parent="venue_menu_root"
              sequence="2"
              groups="group_venue_user"/>
    <!-- Sub Menu for Booking-->
    <menuitem id="booking_menu_booking"
              name="Confirmed Bookings"
              parent="booking_sub_menu"
              action="action_booking_venue"
              sequence="2"
              groups="group_venue_user"/>
    <menuitem id="booking_menu_enquiries"
              name="Booking Enquiries"
              parent="booking_sub_menu"
              action="action_enquiry_venue"
              sequence="1"
              groups="group_venue_user"/>
</odoo>