<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Venue Amenities Form view-->
    <record id="amenities_amenities_form_view" model="ir.ui.view">
        <field name="name">amenities.amenities.form</field>
        <field name="model">amenities.amenities</field>
        <field name="arch" type="xml">
            <form string="Amenities">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>

                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!--Venue Type Form view-->
    <record id="venue_type_form_view" model="ir.ui.view">
        <field name="name">venue.type.form</field>
        <field name="model">venue.type</field>
        <field name="arch" type="xml">
            <form string="Venue Type">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="image" widget="image"/>
                        </group>

                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!--Venue Type Tree View-->
    <record id="venue_type_tree_view" model="ir.ui.view">
        <field name="name">venue.type.tree</field>
        <field name="model">venue.type</field>
        <field name="arch" type="xml">
            <tree string="Venue Type">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <!--Lost Reason Form view-->
    <record id="lost_reason_form_view" model="ir.ui.view">
        <field name="name">lost.reason.form</field>
        <field name="model">lost.reason</field>
        <field name="arch" type="xml">
            <form string="Lost Reasons">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                        </group>

                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!--Lost Reason Tree view-->
    <record id="lost_reason_tree_view" model="ir.ui.view">
        <field name="name">lost.reason.tree</field>
        <field name="model">lost.reason</field>
        <field name="arch" type="xml">
            <tree string="Lost Reasons">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!--services tree view-->
    <record id="services_tree_view" model="ir.ui.view">
        <field name="name">services.tree</field>
        <field name="model">venue.services</field>
        <field name="arch" type="xml">
            <tree string="Services">
                <field name="service_name"/>
            </tree>
        </field>
    </record>

    <!--services form view-->
    <record id="services_form_view" model="ir.ui.view">
        <field name="name">services.form</field>
        <field name="model">venue.services</field>
        <field name="arch" type="xml">
            <form string="Services">
                <sheet>
                    <group>
                        <group>
                            <field name="service_name" required="1"/>
                            <field name="venue_id" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--Action for services-->
    <record id="action_venue_services" model="ir.actions.act_window">
        <field name="name">Services</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">venue.services</field>
        <field name="view_mode">tree,form</field>
    </record>


    <!--Action for Venue Type-->
    <record id="action_venue_type" model="ir.actions.act_window">
        <field name="name">Venue Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">venue.type</field>
        <field name="view_mode">tree,form</field>

    </record>
    <!--Action for Venue Amenities-->
    <record id="action_amenities_amenities" model="ir.actions.act_window">
        <field name="name">Amenities</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">amenities.amenities</field>
        <field name="view_mode">tree,form</field>

    </record>
     <!--Action for Lost Reason-->
    <record id="action_lost_reason" model="ir.actions.act_window">
        <field name="name">Lost Reasons</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">lost.reason</field>
        <field name="view_mode">tree,form</field>

    </record>
     <!--Action for Customers-->
    <record id="action_res_partner_booking" model="ir.actions.act_window">
        <field name="name">Customers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>

    </record>


    <!-- Top menu item -->

    <menuitem id="venue_menu_root"
              name="Booking"
              sequence="10"
              groups="group_venue_user"/>

    <!--Configuration Menu-->
    <menuitem id="venue_configuration_menu"
              name="Configuration"
              parent="venue_menu_root"
              sequence="5"
              groups="tis_venue_booking.group_venue_manager"/>

    <!-- Sub menu Venue Type of Configuration-->
    <menuitem id="menu_configuration_venue_type"
              name="Venue Type"
              parent="venue_configuration_menu"
              action="action_venue_type"
              sequence="3"
              groups="tis_venue_booking.group_venue_manager"/>
    <!-- Sub menu Venue Amenities of Configuration-->
    <menuitem id="menu_configuration_venue_amenities"
              name="Amenities"
              parent="venue_configuration_menu"
              action="action_amenities_amenities"
              sequence="3"
              groups="tis_venue_booking.group_venue_manager"/>
     <!-- Sub menu Venue Type of Configuration-->
    <menuitem id="menu_configuration_lost_reason"
              name="Lost Reasons"
              parent="venue_configuration_menu"
              action="action_lost_reason"
              sequence="6"
              groups="tis_venue_booking.group_venue_manager"/>

     <!-- Sub menu for services-->
     <menuitem id="menu_configuration_services"
              name="Services"
              parent="venue_configuration_menu"
              action="action_venue_services"
              sequence="3"
              groups="tis_venue_booking.group_venue_manager"/>


    <!--Adding Customres Menu-->
    <menuitem id="venue_customers_menu"
              name="Customers"
              parent="venue_menu_root"
              action="action_res_partner_booking"
              sequence="4"
              groups="tis_venue_booking.group_venue_manager"/>



</odoo>