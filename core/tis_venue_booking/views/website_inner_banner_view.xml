<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--inner banner-->
    <record id="action_venue_booking_inner_banner" model="ir.actions.act_window">
        <field name="name">Inner Banners</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">inner.banner</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>
                Create Banner
            </p>
        </field>
    </record>

    <menuitem action="action_venue_booking_inner_banner" id="venue_booking_inner_banner" name="Inner Banners"
              parent="tis_venue_booking.venue_booking_menu_root" sequence="100"/>

    <record id="venue_inner_banner_tree" model="ir.ui.view">
        <field name="name">venue.inner.banner.tree</field>
        <field name="model">inner.banner</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="header"/>
            </tree>
        </field>
    </record>

    <record id="venue_inner_banner_form" model="ir.ui.view">
        <field name="name">venue.inner.banner.form</field>
        <field name="model">inner.banner</field>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="header"/>

                        </group>
                        <group>
                            <field name="image" widget="image" class="oe_avatar oe_left" required="1"/>
                        </group>
                        <group string="Description">
                            <field name="description" nolabel="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="inner_banner_tree" model="ir.ui.view">
        <field name="name">inner.banner.tree</field>
        <field name="model">inner.banner</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>


    <!--inner banner ends-->

</odoo>