<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="booking_invoicing_form" model="ir.ui.view">
        <field name="name">booking.invoicing.form</field>
        <field name="model">booking.invoice</field>
        <field name="arch" type="xml">
            <form string="Invoice Booking">
                <group>
                    <field name="advance_payment_method"
                           widget="radio"
                           class="oe_inline"/>

                    <label for="amount"
                           attrs="{'invisible': [('advance_payment_method', 'not in', ('fixed','percentage'))]}"/>
                    <div attrs="{'invisible': [('advance_payment_method', 'not in', ('fixed','percentage'))]}">
                        <field name="amount"
                               attrs="{'required': [('advance_payment_method', 'in', ('fixed','percentage'))]}"
                               class="oe_inline" widget="monetary"/>
                        <span
                                attrs="{'invisible': [('advance_payment_method', '!=', 'percentage')]}"
                                class="oe_inline">%
                        </span>
                    </div>
                </group>

                <footer>
                    <button name="action_create_invoice" string="Create Invoice" type="object" class="btn-primary"
                            />
                    <button name="action_create_view_invoice" string="Create And View Invoice" type="object"

                            class="btn-primary"
                            />

                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>

            </form>
        </field>
    </record>
    <!--  Invoice Booking Button action -->
    <record id="booking_invoicing_action" model="ir.actions.act_window">
        <field name="name">Invoice Booking</field>
        <field name="res_model">booking.invoice</field>
        <field name="view_id" ref="booking_invoicing_form"/>
        <field name="target">new</field>
    </record>


</odoo>