<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="booking_cancellation_form" model="ir.ui.view">
        <field name="name">booking.cancellation.form</field>
        <field name="model">cancel.booking</field>
        <field name="arch" type="xml">
            <form string="Cancel Booking">
                <group>
                    <field name="lost_reason_id"
                           widget="res_partner_many2one"
                           class="oe_inline" required="1" options="{'no_create': True}"/>
                </group>
                    <field name="text" nolabel="1" placeholder="Enter your comments"/>

                <footer>
                    <button name="action_lost_reason_apply" string="Cancel Booking" type="object" class="btn-primary"/>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>

            </form>
        </field>
     </record>
        <!--  Cancel Booking Button action -->
    <record id="booking_cancellation_action" model="ir.actions.act_window">
        <field name="name">Cancellation</field>
        <field name="res_model">cancel.booking</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="booking_cancellation_form"/>
        <field name="target">new</field>
    </record>

</odoo>
