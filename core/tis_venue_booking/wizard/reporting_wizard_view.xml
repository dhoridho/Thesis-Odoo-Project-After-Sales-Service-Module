<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_booking_report_wizard" model="ir.ui.view">

        <field name="name">booking.wizard.form</field>
        <field name="model">reporting.wizard</field>
        <field name="arch" type="xml">
            <form string="Booking Report">
                <style>
                    .status_selection{
                    padding: 4px !important;
                    }
                </style>

                <group attrs="{'invisible':[('booking_report_printed','=',True)]}">
                    <group>
                        <field name="date_start" required="1"/>
                        <field name="customer_ids" widget="many2many_tags"/>
                        <field name="booking_status" class="status_selection"/>
                    </group>
                    <group>
                        <field name="date_end" required="1"/>
                        <field name="venue_id" widget="many2many_tags"/>
                        <field name="invoice_status" class="status_selection"/>
                    </group>
                </group>
                <field name="booking_report_printed" invisible="1"/>
                <field name="file_name" invisible="1"/>
                <field name="booking_summary_file" readonly="1" filename="file_name"
                       attrs="{'invisible':[('booking_report_printed','=',False)]}"/>

                <footer>
                    <button name="print_pdf_report" string="Print PDF" type="object" class="btn-primary"
                            attrs="{'invisible':[('booking_report_printed','=',True)]}"/>
                    <button name="print_xls_report" string="Export" type="object" class="btn-primary"
                            attrs="{'invisible':[('booking_report_printed','=',True)]}"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


</odoo>