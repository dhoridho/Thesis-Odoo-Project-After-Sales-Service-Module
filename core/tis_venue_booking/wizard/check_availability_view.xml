<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="check_availability_wizard_form" model="ir.ui.view">
        <field name="name">check.availability.wizard.form</field>
        <field name="model">check.availability.wizard</field>
        <field name="arch" type="xml">
            <form string="Check Venue Availability">
                <group>
                    <group>
                        <field name="booking_type" widget="radio"/>
                        <field name="from_date"/>
                        <field name="venue_id" attrs="{'invisible':[('search_by', '==', 'others')],
                        'required':[('search_by','==','venue')]}"/>
                        <field name="budget" attrs="{'invisible':[('search_by', '==', 'venue')]}"/>
                        <field name="location_id" attrs="{'invisible':[('search_by', '==', 'venue')]}"/>
                    </group>
                    <group>
                        <field name="search_by" widget="radio"/>
                        <field name="to_date"/>
                        <field name="capacity" attrs="{'invisible':[('search_by', '==', 'venue')]}"/>
                    </group>
                </group>
                <group>
                    <field String="Amenities" name="amenities" widget="many2many_tags"
                           attrs="{'invisible':[('search_by', '==', 'venue')]}"/>
                    <field String="Services" name="services" widget="many2many_tags"
                           attrs="{'invisible':[('search_by', '==', 'venue')]}"/>
                </group>
                <footer>
                    <button string='search' name="search_action" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="check_availability_wizard" model="ir.actions.act_window">
        <field name="name">Check Venue Availability</field>
        <field name="res_model">check.availability.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="check_availability_wizard_form"/>
        <field name="target">new</field>
    </record>


    <menuitem id="check_availability_wizard_menu"
              name="Check Availability"
              parent="tis_venue_booking.booking_sub_menu"
              sequence="3"
              action="check_availability_wizard"
              groups="group_venue_user"/>

    <!--info message-->
    <record id="message_wizard_form" model="ir.ui.view">
        <field name="name">message.wizard.form</field>
        <field name="model">message.wizard</field>
        <field name="arch" type="xml">
            <form>
                <field name="message" readonly="1"/>
                <footer>
                    <button name="action_ok" string="Ok" type="object" default_focus="1" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
    <!--info message ends-->

</odoo>