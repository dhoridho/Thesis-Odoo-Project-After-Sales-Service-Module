<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form view -->
    <record id="booking_confirming_form" model="ir.ui.view">
        <field name="name">booking.confirming.form</field>
        <field name="model">partner.binding</field>
        <field name="arch" type="xml">
            <form string="Confirm Booking">
                <group string="Customers" col="1">
                    <field name="if_customer" invisible="1"/>
                    <field name="action" class="oe_inline" widget="radio"/>
                    <group col="2">
                        <field name="partner_id"
                               widget="res_partner_many2one"
                               attrs="{'required': [('action', '=', 'exist')], 'invisible':[('action','!=','exist')]}"
                               context="{'show_vat': True}"
                               class="oe_inline"/>
                    </group>
                </group>
                <footer>
                    <button name="action_apply" string="Confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <!--  Confirm Booking Button action -->
    <record id="action_confirm_booking" model="ir.actions.act_window">
        <field name="name">Create Customer</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">partner.binding</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="booking_confirming_form"/>
        <field name="target">new</field>
    </record>

</odoo>

