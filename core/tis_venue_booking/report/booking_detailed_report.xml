<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_bookingreport_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout" t-lang="en_US">
                <div class="page">
                    <div class="oe_structure"/>
                    <br/>
                    <br/>
                    <div style="width: 100%">
                        <strong>
                            <h2 class="text-center">
                                Venue Booking Report
                            </h2>
                        </strong>
                        <div class="row mt32 mb32">
                            <div class="col-auto mw-100 mb-3 text-center" style="width : 50%">
                                <t t-if="start_date">
                                    <strong>Start Date :
                                        <strong t-esc="datetime.datetime.strptime(str(start_date), '%Y-%m-%d %H:%M:%S').strftime('%d-%m-%Y %H:%M:%S')"/>
                                    </strong>
                                </t>

                            </div>
                            <div class="col-auto mw-100 mb-3 text-center" style="width : 50%">
                                <t t-if="end_date">
                                    <strong>End Date :
                                        <strong t-esc="datetime.datetime.strptime(str(end_date), '%Y-%m-%d %H:%M:%S').strftime('%d-%m-%Y %H:%M:%S')"/>
                                    </strong>
                                </t>
                            </div>
                        </div>
                        <div class="row">
                            <table class="table table-condensed o_main_table " style="width: 100%">
                                <thead style=" background-color: #edeadf; border-style: solid;border-color:#dde2de">
                                    <th class="text-left" style="width: 11%">Reference</th>
                                    <th class="text-left" style="width: 11%">Venue</th>
                                    <th class="text-left" style="width: 11%">Customer</th>
                                    <th class="text-center" style="width: 11%">Start Date</th>
                                    <th class="text-center" style="width: 11%">End Date</th>
                                    <th class="text-right" style="width: 11%">Venue Charge</th>
                                    <th class="text-right" style="width: 11%">Additional Charge</th>
                                    <th class="text-right" style="width: 11%">Extra Amenities Charge</th>
                                    <th class="text-right" style="width: 11%">Total Amount</th>
                                    <th class="text-right" style="width: 11%">Amount Received</th>
                                    <th class="text-right" style="width: 11%">Amount Due</th>
                                    <th class="text-right" style="width: 11%">Status</th>
                                    <th class="text-right" style="width: 11%">Invoicing Status</th>
                                </thead>
                                <tbody>
                                    <t t-foreach="docs" t-as="doc">
                                        <tr>
                                            <td class="text-left">
                                                <span t-esc="doc['name']"/>
                                            </td>
                                            <td class="text-left">
                                                <span t-esc="doc['venue']"/>
                                            </td>

                                            <td class="text-left">
                                                <span t-esc="doc['customer']"/>
                                            </td>
                                            <td class="text-center">
                                                <t t-if="doc['start_date']">
                                                    <span t-esc="doc['start_date'].strftime('%d-%m-%Y, %H:%M:%S')"/>
                                                </t>
                                            </td>
                                            <td class="text-center">
                                                <t t-if="doc['end_date']">
                                                    <span t-esc="doc['end_date'].strftime('%d-%m-%Y, %H:%M:%S')"/>
                                                </t>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="doc['venue_booking_charge'] " t-options='{"widget": "monetary" ,"display_currency": doc["currency"]}' />
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="doc['additional_booking_charge']" t-options='{"widget": "monetary" ,"display_currency": doc["currency"]}'/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="doc['amenities_amount_untaxed']" t-options='{"widget": "monetary" ,"display_currency": doc["currency"]}'/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="doc['total_amount']" t-options='{"widget": "monetary" ,"display_currency": doc["currency"]}'/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="doc['amount_received']" t-options='{"widget": "monetary" ,"display_currency": doc["currency"]}'/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="doc['amount_due']" t-options='{"widget": "monetary" ,"display_currency": doc["currency"]}'/>
                                            </td>
                                            <td class="text-left">
                                                <span t-esc="doc['state']"/>
                                            </td>
                                            <td class="text-left">
                                                <span t-esc="doc['invoice_status']"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="footer">
                    <div class="row text-center" style="border-top: 1px solid black;">
                        <div class="col-xs-3 col-xs-offset-9 text-right">
                            <ul class="list-inline" style="margin-top:10px;">
                                <li>Page:
                                    <span class="page"/>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>


