<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_venue_booking_pivot" model="ir.ui.view">
        <field name="name">venue.booking.pivot</field>
        <field name="model">booking.report</field>
        <field name="arch" type="xml">
            <pivot string="Venue Booking Analysis" disable_linking="True">
                <field name="venue_id" type="row"/>
                <field name="from_date" interval="month" type="col"/>
                <field name="amount_total" type="measure"/>
            </pivot>
        </field>
    </record>
    <record id="view_booking_analysis_search" model="ir.ui.view">
        <field name="name">booking.report.search</field>
        <field name="model">booking.report</field>
        <field name="arch" type="xml">
            <search string="Booking Analysis">
                <filter string="This Year" name="year" domain="[('from_date','&lt;=', time.strftime('%%Y-12-31')),('from_date','&gt;=',time.strftime('%%Y-01-01'))]"/>
                <filter string="Today" name="today" domain="[('from_date','&lt;=', (datetime.date.today()).strftime('%Y-%m-%d')),('from_date','&gt;=',(datetime.date.today()).strftime('%Y-%m-%d'))]"/>
                <filter string="Last 3 Months" name="last_three_month"
                        domain="[('from_date','&gt;=',(context_today()-relativedelta(months=3)).strftime('%Y-%m-01')),
                        ('from_date','&lt;',time.strftime('%Y-%m-01'))]"/>
                <filter string="Last 6 Months" name="last_three_month"
                        domain="[('from_date','&gt;=',(context_today()-relativedelta(months=6)).strftime('%Y-%m-01')),
                        ('from_date','&lt;',time.strftime('%Y-%m-01'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Venue" name="venue" domain="[]" context="{'group_by':'venue_id'}"/>
                    <filter name="customer" string="Customer" domain="[]" context="{'group_by':'partner_id'}"/>
                    <filter string="Type" name="booking_reference" domain="[]" context="{'group_by':'booking_type'}"/>
                    <filter string="Status" name="booking_status" domain="[]" context="{'group_by':'state'}"/>
                    <filter string="Booking Date" name="booking_month" domain="[]" context="{'group_by':'from_date:month'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="action_booking_pivot_analysis_reporting" model="ir.actions.act_window">
        <field name="name">Venue Booking Analysis</field>
        <field name="res_model">booking.report</field>
        <field name="view_mode">pivot</field>
        <field name="target">current</field>
        <field name="context">{'search_default_year': 1}</field>
    </record>
</odoo>