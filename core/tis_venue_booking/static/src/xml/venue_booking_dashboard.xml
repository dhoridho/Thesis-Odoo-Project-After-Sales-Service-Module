<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="BookingDashboardMain">
        <div class="scroll">

            <div class="container-fluid main-head">
                <div class="row">
                    <div class="col-md-12">
                        <h3 class="main-head"><t t-esc="widget.booking_data[1]"/>&amp;nbsp;
                            <t t-esc="widget.booking_data[2]"/>
                        </h3>
                    </div>
                </div>
            </div>

            <div class="container second-head">
                <div class="row">
                    <div class="col-md-3 ">
                        <div class="card">

                            <div class="card-body1">
                                <h5>Bookings</h5>
                                <span class="special">
                                    <t t-esc="widget.booking_data[3][0]"/>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 ">
                        <div class="card">
                            <div class="card-body2">
                                <h5>Confirmed Bookings</h5>
                                <span class="special">
                                    <t t-esc="widget.booking_data[4][0]"/>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 ">
                        <div class="card">
                            <div class="card-body3">
                                <h5>Cancelled Bookings</h5>
                                <span class="special">
                                    <t t-esc="widget.booking_data[5][0]"/>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 ">
                        <div class="card">
                            <div class="card-body4">
                                <h5>Expected Revenue</h5>
                                <span class="special"><t t-esc="widget.booking_data[0]"/>&amp;nbsp;
                                    <t t-esc="widget.booking_data[6][0]"/>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container mt-5">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card-body">
                            <div class="title-chart">
                                <h3 class="head-cust1">Total Booking Amount In
                                    <t t-esc="widget.booking_data[1]"/>
                                    Based on Date
                                </h3>
                                <div class="embed-responsive embed-responsive-16by9">
                                    <canvas class="embed-responsive-item" id="lineChartDemo"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <div class="title-chart">
                                <h3 class="head-cust1">Total Booking Amount In 2020 Based On Month</h3>
                                <div class="embed-responsive embed-responsive-16by9">
                                    <canvas class="embed-responsive-item" id="barChartDemo"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container mt-5">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card-body">

                            <div class="titles">
                                <h5 class="head-cust">Top 5 Venues of &amp;nbsp;
                                    <t t-esc="widget.booking_data[2]"/>
                                </h5>
                                <div class="embed-responsive embed-responsive-16by9">
                                    <canvas class="embed-responsive-item" id="pieChartDemo1"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">

                            <div class="titles">
                                <h5 class="head-cust">Top 5 Booked Venues of &amp;nbsp;
                                    <t t-esc="widget.booking_data[1]"/> &amp;nbsp;
                                    <t t-esc="widget.booking_data[2]"/>
                                </h5>
                                <div class="embed-responsive embed-responsive-16by9">
                                    <canvas class="embed-responsive-item" id="pieChartDemo2"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 mt-5 mb-5">
                        <div class="card-body">
                            <div class="titles">
                                <h5 class="head-cust">Top 5 Customers of &amp;nbsp;
                                    <t t-esc="widget.booking_data[2]"/>
                                </h5>
                                <div class="embed-responsive embed-responsive-16by9">
                                    <canvas class="embed-responsive-item" id="pieChartDemo"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </t>
</templates>
