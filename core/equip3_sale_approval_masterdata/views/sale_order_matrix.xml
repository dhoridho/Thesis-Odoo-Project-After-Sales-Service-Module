<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="sale_order_matrix_inherit" model="ir.ui.view">
            <field name="name">approval.matrix.sale.order.order.view.form.inherit</field>
            <field name="model">approval.matrix.sale.order</field>
            <field name="inherit_id" ref="equip3_sale_operation.view_form_approval_matrix_sale_order"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='approver_matrix_line_ids']/tree/field[@name='sequence2']" position="after">
                    <field name="approver_types" required="1"/>
                </xpath>
                <xpath expr="//field[@name='approver_matrix_line_ids']/tree/field[@name='user_name_ids']" position="attributes">
                    <attribute name="attrs" >{'readonly':[('approver_types','=','by_hierarchy')],'required':[('approver_types','=','specific_approver')]}</attribute>
                </xpath>
                
            </field>
        </record>
    
        
    
    </data>
    

</odoo>
