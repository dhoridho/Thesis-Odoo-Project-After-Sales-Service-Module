<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="salary_increment_approval_matrix_tree" model="ir.ui.view">
        <field name="name">salary.increment.approval.matrix.tree</field>
        <field name="model">salary.increment.approval.matrix</field>
        <field name="arch" type="xml">
            <tree string="Salary Increment Approval Matrix">
                <field name="name"/>
                <field name="level"/>
                <field name="create_uid"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="salary_increment_approval_matrix_form" model="ir.ui.view">
        <field name="name">salary.increment.approval.matrix.form</field>
        <field name="model">salary.increment.approval.matrix</field>
        <field name="arch" type="xml">
            <form string="Salary Increment Approval Matrix">
                <sheet>
                    <div class="oe_title" name="title">
                        <h2>
                            <field name="name" nolabel="1" readonly="1"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="apply_to" required="1"/>
                            <field name="employee_ids" widget="many2many_tags"
                                   attrs="{'invisible': [('apply_to', '!=', 'employee')],'required': [('apply_to', '=', 'employee')]}"/>
                            <field name="department_ids" widget="many2many_tags"
                                   attrs="{'invisible': [('apply_to', '!=', 'department')],'required': [('apply_to', '=', 'department')]}"/>
                            <field name="job_ids" widget="many2many_tags"
                                   attrs="{'invisible': [('apply_to', '!=', 'job_position')],'required': [('apply_to', '=', 'job_position')]}"/>
                        </group>
                        <group>
                            <field name="company_id" readonly="1" force_save="1"/>
                            <field name="create_uid"/>
                            <field name="create_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Approver Lines">
                            <field name="approval_matrix_ids" context="{'approval_matrix_ids':approval_matrix_ids}">
                                <tree editable="bottom">
                                    <field name="sequence"/>
                                    <field name="approver_types" required="1"/>
                                    <field name="approver_ids" force_save="1" widget="many2many_tags" attrs="{'readonly':[('approver_types','=','by_hierarchy')],'required':[('approver_types','=','specific_approver')]}"/>
                                    <field name="minimum_approver"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_salary_increment_approval_matrix" model="ir.actions.act_window">
        <field name="name">Salary Increment Approval Matrix</field>
        <field name="res_model">salary.increment.approval.matrix</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_salary_increment_approval_matrix"
              action="action_salary_increment_approval_matrix"
              parent="hr.hr_menu_configuration"/>
</odoo>