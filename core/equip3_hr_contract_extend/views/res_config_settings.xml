<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="inherit_res_config_settings_view_form_salary_increment" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.hr.salary.increment</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="70"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]/div[@data-key='hr']" position="inside">
                    <h2>Salary Increment Follow Up Setting</h2>
                    <div class="row mt16 o_settings_container" name="auto_follow_up_salary_increment">
                        <div class="col-12 col-lg-6 o_setting_box" id="auto_follow_up_salary_increment_setting">
                            <div class="content-group">
                                <div class="mt16">
                                    <field  name="auto_follow_up_salary_increment"/>
                                    <label for="auto_follow_up_salary_increment" string="Auto Follow Up" class="oe_inline" style="margin-left:10px;"/>
                                </div>
                                <div class="mt16" attrs="{'invisible':[('auto_follow_up_salary_increment','!=',True)]}">
                                    <label for="interval_number_salary_increment" string="Execute Every"/>
                                    <div attrs="{'invisible':[('auto_follow_up_salary_increment','!=',True)]}">
                                        <field name="interval_number_salary_increment" class="oe_inline" attrs="{'required':[('auto_follow_up_salary_increment','=',True)]}"/>
                                        <field name="interval_type_salary_increment" class="oe_inline" attrs="{'required':[('auto_follow_up_salary_increment','=',True)]}"/>
                                    </div>
                                </div>
                                <div class="mt16" attrs="{'invisible':[('auto_follow_up_salary_increment','!=',True)]}">
                                    <label for="number_of_repetitions_salary_increment" string="Number of Repetitions"/>
                                    <field name="number_of_repetitions_salary_increment" class="oe_inline" attrs="{'required':[('auto_follow_up_salary_increment','=',True)]}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
