<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="expiry_conract_notification_form_view" model="ir.ui.view">
            <field name="name">expiry.conract.notification.form</field>
            <field name="model">expiry.contract.notification</field>
            <field name="arch" type="xml">
                <form string="Contract Notification Settings" create="0" delete="0">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <label for="days" string="Expire Notification"/>
                                <div class="o_row">
                                    <field name="days"/>
                                    <span>Days Before Expiry</span>
                                </div>
                                <field name="company_id" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Contract Expiry Notification Lines">
                                <field name="line_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="job_ids" widget="many2many_tags" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                        <field name="pic_ids" widget="many2many_tags" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="expiry_conract_notification_tree_view" model="ir.ui.view">
            <field name="name">expiry.contract.notification.tree</field>
            <field name="model">expiry.contract.notification</field>
            <field name="arch" type="xml">
                <tree string="Contract Notification Settings" create="0" delete="0">
                    <field name="name"/>
                    <field name="days"/>
                    <field name="company_id" readonly="1"/>
                </tree>
            </field>
        </record>

        <record id="expiry_conract_notification_search_view" model="ir.ui.view">
            <field name="name">expiry.contract.notification.search</field>
            <field name="model">expiry.contract.notification</field>
            <field name="arch" type="xml">
                <search string="Contract Notification Settings ">
                    <field name="month"/>
                </search>
            </field>
        </record>

        <record id="expiry_conract_notification_act_window" model="ir.actions.act_window">
            <field name="name">Expiry Contract Notification</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">expiry.contract.notification</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new notification.
                </p>
            </field>
        </record>

        <menuitem name="Contract Notification Settings" id="expiry_conract_notification_menu"
                  parent="hr.menu_human_resources_configuration" action="expiry_conract_notification_act_window"/>

                  <record model='ir.ui.menu' id='expiry_conract_notification_menu'>
                    <field name="groups_id" eval="[(6, 0, [ref('equip3_hr_employee_access_right_setting.group_hr_officer')])]"/>
                </record>

    </data>
</odoo>