<odoo>
    <data>
        <record id="inherit_hr_contract_type_view_form" model="ir.ui.view">
            <field name="name">inherit.hr.contract.type.view.form</field>
            <field name="model">hr.contract.type</field>
            <field name="inherit_id" ref="hr_contract_types.hr_contract_type_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[1]" position="replace">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="company_id" readonly="1" groups="base.group_multi_company"/>
                                <!-- <field name="branch_id" domain="[('company_id','=',company_id)]"/> -->
                                <field name="create_date" string="Created On"/>
                                <field name="create_uid" string="Created By"/>
                            </group>
                        </group>
                    </sheet>
                        <div class="oe_chatter">
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>