<odoo>
      <data noupdate="0">

        <record id="hashmicro_contract_notification" model="ir.cron">
            <field name="name">HR Contract: Expiry Contract Notification &amp; Update State</field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="nextcall" eval="(DateTime.now()).strftime('%Y-%m-%d 18:00:00') " />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="model_hr_contract"/>
            <field name="state">code</field>
            <field name="doall" eval="True"/>
            <field name="code">model.ir_cron_send_notification()</field>
        </record>

        <!-- Scheduler for Auto Follow Up Salary Increment Approver-->
        <record forcecreate="True" id="ir_cron_salary_increment_auto_follow_up_approver" model="ir.cron">
            <field name="name">Auto Follow Up Salary Increment Approver</field>
            <field name="model_id" ref="model_hr_salary_increment"/>
            <field name="state">code</field>
            <field name="code">model.get_auto_follow_up_approver()</field>
            <field eval="False" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall" />
        </record>

        <!-- Expired Soon -->
        <record id="hr_contract.ir_cron_data_contract_update_state" model="ir.cron">
            <field name="name">HR Contract: update state</field>
            <field name="model_id" ref="model_hr_contract"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">model.update_state()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now()).strftime('%Y-%m-%d 19:00:00') " />
        </record>

      </data>
</odoo>