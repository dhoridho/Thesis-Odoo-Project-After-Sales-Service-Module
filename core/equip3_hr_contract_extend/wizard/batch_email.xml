<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="contract_batch_email_template_view" model="ir.ui.view">
        <field name="name">contract.batch.email.template</field>
        <field name="model">contract.batch.email.template</field>
        <field name="arch" type="xml">
            <form string="contract Batch Email Template" create="false" edit="false">
                <group>
                    <group>
                        <field name="contract_ids" force_save="1" invisible="1"/>
                        <field name="parent_ids" force_save="1" widget="many2many_tags_email" placeholder="Add contacts to notify..." readonly="1"/>
                        <field name="subject" force_save="1" readonly="1"/>
                        <field name="email_template_id" domain="[('model_id','=', 'hr.contract')]"/>
                    </group>
                </group>
                <footer>
                    <button name="send_batch_email" string="Send" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>