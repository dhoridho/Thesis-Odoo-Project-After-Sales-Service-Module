<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="LoginScreenInherit" t-inherit="pos_hr.LoginScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('login-body')]" position="replace">
            <div class="login-body">
                <span class="login-element btn-barcode" style="padding-top: 3%;" t-att-class="barcodeClass">
                    <img class="login-barcode-img"
                         src="/point_of_sale/static/img/barcode.png" />
                    <div class="login-barcode-text" style="font-size: 17px !important; color: #555555">Scan your badge</div>
                </span>
                <!-- <span class="login-element btn-face-recognition"> 
                    <button class="login-element face-recognition" t-att-class="faceRecognitionClass" t-on-click="openFaceRecognition">
                    <img class="login-barcode-img"
                         src="/point_of_sale/static/img/FaceRecognition.png" style="width:30px; height:30px; padding:10px 0px 10px 0px;" />
                         <span style="display: block;  padding: 5px; color: black">
                            <i class="fa fa-keyboard-o"/>
                            <span>  </span>
                            Face Recognition
                        </span>
                    </button>
                    
                </span> -->
                <span class="login-element btn-face-recognition" t-if="env.pos.config.pos_login_face_recognition">
                    <button class="login-button face-recognition" t-on-click="openFaceRecognition">
                        <i class="fa fa-user-circle" style="font-size: 30px"/>
                        <span style="display: block ;padding: 5px; color: black">
                            <i class="fa fa-keyboard-o"/>
                            <span>  </span>
                            Space
                        </span>
                    </button>
                    <span class="label-face-regognition">
                            <span>  </span>
                            Face Recognition
                        </span>
                </span>
                <span class="login-or">or</span>
                <span class="login-element btn-select-employee">
                    <button class="login-button select-employee" t-on-click="selectCashier">
                        <i class="fa fa-users" style="font-size: 30px"/>
                        <span style="display: block;  padding: 5px; color: black">
                            <i class="fa fa-keyboard-o"/>
                            <span>  </span>
                            Enter
                        </span>
                    </button> 
                    <span class="label-select-employee">
                        <span>  </span>
                        Choose Employee (PIN)
                    </span>
                </span>
            </div>
        </xpath>
    </t>
</templates>