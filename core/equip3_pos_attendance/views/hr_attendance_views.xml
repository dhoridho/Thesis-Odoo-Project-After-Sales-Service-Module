<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hr_attendance_view_form_base_inherit" model="ir.ui.view">
        <field name="name">hr.attendance.view.form.base.inherit</field>
        <field name="model">hr.attendance</field>
        <field name="priority" eval="100"/>
        <field name="inherit_id" ref="hr_attendance_base.hr_attendance_view_form_base"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='worked_hours']" position="replace">
                <field name="worked_hours" widget="float_time"/>
            </xpath>
        </field>
    </record>

    <record id="pos_hr_attendance_view_tree" model="ir.ui.view">
        <field name="name">hr.attendance.pos.view.tree</field>
        <field name="model">hr.attendance</field>
        <field name="arch" type="xml">
            <tree string="Attendances">
                <field name="employee_id" />
                <field name="attendance_status" />
                <field name="start_working_date" />
                <field name="check_in" />
                <field name="check_out" />
                <field name="worked_hours" widget="float_time" />
            </tree>
        </field>
    </record>

    <record id="pos_hr_attendance_view_form" model="ir.ui.view">
        <field name="name">hr.attendance.pos.view.form</field>
        <field name="model">hr.attendance</field>
        <field name="arch" type="xml"><form string="Employee attendances" edit="1" >
            <sheet>
                <group>
                    <group >
                        <field name="employee_id" />
                        <field name="attendance_status" />
                    </group>
                    <group >
                        <field name="start_working_date" readonly="1" />
                    </group>
                    <group >
                        <field name="check_in" readonly="1" />
                        <field name="worked_hours" widget="float_time"/>
                    </group>
                    <group >
                        <field name="check_out" readonly="1"/>
                    </group>
                </group>
                <group col="8" string="Face control" >
                    <div colspan="2" attrs="{'invisible': [('face_recognition_image_check_in', '=', False),('webcam_check_in', '=', False)]}">
                        <div class="o_squared_image" >
                            <field name="face_recognition_image_check_in" class="card-img-top only-descriptor face-recognition-detectors" widget="image_recognition"/>
                            <field name="webcam_check_in" class="card-img-top face-recognition-origin" widget="image_recognition"/>
                        </div>
                    </div>
                    <div colspan="2" attrs="{'invisible': [('face_recognition_image_check_in', '=', False),('webcam_check_in', '=', False)]}">
                        <div class="o_squared_image" >
                            <field name="face_recognition_image_check_out" class="card-img-top only-descriptor face-recognition-detectors" widget="image_recognition"/>
                            <field name="webcam_check_out" class="card-img-top face-recognition-origin" widget="image_recognition"/>
                        </div>
                    </div>
                </group>
                <group>
                    <group string="Check in" >
                        <group col="4" />
                        <group/>
                        <group/>
                        <group col="2" colspan="4" >
                            <label for="check_in_latitude" string="Check-in Location" />
                            <span class="oe_inline" >
                                Latitude:
                                <field name="check_in_latitude" nolabel="1"/>
                                <br />
                                Longitude: 
                                <field name="check_in_longitude" nolabel="1"/>
                                <br />
                                Map Check-in: 
                                <button name="open_map_check_in" type="object" string="Check-in" icon="fa-map-marker" class="oe_inline btn-info"/>
                            </span>
                            <field name="check_in_address"/>
                        </group>
                    </group>
                    <group string="Check out" >
                        <group col="4" />
                        <group />
                        <group />
                        <group col="2" colspan="4" >
                            <label for="check_out_latitude" string="Check-out Location" />
                            <span class="oe_inline" >
                                
                                Latitude: 
                                <field name="check_out_latitude" nolabel="1"/>
                                <br />
                                
                                Longitude: 
                                <field name="check_out_longitude" nolabel="1"/>
                                <br />
                                
                                Map Check-out: 
                                <button name="open_map_check_out" type="object" string="Check-out" icon="fa-map-marker" class="oe_inline btn-info"/>
                            </span>
                            <field name="check_out_address"/>
                        </group>
                    </group>
                </group>
            </sheet>
        </form>
        </field>
    </record>

    <record id="pos_hr_attendance_action" model="ir.actions.act_window">
        <field name="name">User Attendance</field>
        <field name="res_model">hr.attendance</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_check_in_pos', '=', True)]</field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('equip3_pos_attendance.pos_hr_attendance_view_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('equip3_pos_attendance.pos_hr_attendance_view_form')})]" />
    </record>

    <menuitem
        id="pos_attendance_menu_root"
        name="POS Attendance"
        parent="point_of_sale.menu_point_root"
        sequence="18"/>

    <menuitem
        id="pos_attendance_user_menu"
        name="User Attendance"
        action="pos_hr_attendance_action"
        parent="equip3_pos_attendance.pos_attendance_menu_root"
        sequence="10"/>

</odoo>