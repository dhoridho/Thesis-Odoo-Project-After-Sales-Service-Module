<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="pos_config_retail_inherit" model="ir.ui.view">
        <field name="name">pos.config.retail.inherit</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="equip3_pos_general.pos_config_retail"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='security_discounts']/group[1]" position="after">
                <group>
                    <group string="Face Recognition">
                        <field name="pos_login_face_recognition"/>
                        <field name="integrate_with_hr"/>
                    </group> 
                </group>
            </xpath>
        </field>
    </record>
</odoo>