<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_res_user_image_form" model="ir.ui.view">
        <field name="name">res.users.image.pos.view.form.inherit</field>
        <field name="model">res.users.image</field>
        <field name="inherit_id" ref="hr_attendance_face_recognition.view_res_user_image_form"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='res_user_id']" position="replace">
                <label for="res_user_id" />
                <br/>
                <field name="res_user_id" readonly="0" />
            </xpath>
            <!-- <xpath expr="//label[@for='is_cropped']" position="replace"/>
            <xpath expr="//field[@name='is_cropped']" position="replace"/>
            <xpath expr="//label[@for='minimum_face_descriptor']" position="replace"/>
            <xpath expr="//field[@name='minimum_face_descriptor']" position="replace"/>
            <xpath expr="//label[@for='current_face_descriptor']" position="replace"/>
            <xpath expr="//field[@name='current_face_descriptor']" position="replace"/>
            <xpath expr="//p" position="replace"/> -->
        </field>
    </record>

    <record id="pos_res_users_image_action" model="ir.actions.act_window">
        <field name="name">Face Tables</field>
        <field name="res_model">res.users.image</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'tree'}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('equip3_pos_attendance.view_res_user_image_form')})]" />
    </record>

    <menuitem
        id="pos_attendance_menu"
        name="Face Tables"
        action="pos_res_users_image_action"
        parent="pos_attendance_menu_root"
        sequence="20"/>

</odoo>
