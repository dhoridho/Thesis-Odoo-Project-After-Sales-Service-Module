<?xml version="1.0"?>
<odoo>

    <menuitem id="menu_rental_root" name="Rental" sequence="1"
        web_icon="equip3_rental_masterdata,static/description/Rent.svg"/>

    <record id="product.product_template_action" model="ir.actions.act_window">
        <field name="name">Rental Product</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('rent_ok', '=', True)]</field>
        <field name="context">{"default_rent_ok":True, "default_type":'product'}</field>
    </record>

    <menuitem id="menu_rental_masterdata" name="Master Data"
        parent="menu_rental_root" sequence="3"/>
    <menuitem id="menu_rental_product" name="Rental Product"
        parent="menu_rental_masterdata" action="product.product_template_action" sequence="7" />
    <menuitem id="menu_rental_checklist" name="Checklist Item"
        parent="menu_rental_masterdata" action="action_rental_order_checklist_item" sequence="8" />
    <menuitem id="menu_rental_customer" name="Customers"
        parent="menu_rental_masterdata" action="base.action_partner_customer_form" sequence="9" />
    <record id="menu_rental_masterdata" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-parent-asset-master-data</field>
    </record>

    <menuitem id="rental_config_menu_categ" name="Configuration" parent="equip3_rental_masterdata.menu_rental_root" sequence="5"/>
    <!-- This Menu Item must have a parent and an action -->

    <record id="action_view_equip3_generate_asset_rental_wizard" model="ir.actions.act_window">
        <field name="name">Generate Assets</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">rental.generate.asset.wizard</field>
        <field name="context">{'is_from_rental':True}</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <menuitem id="rental_order_generate_assets_menu_act" name="Generate Assets" parent="rental_config_menu_categ" action="action_view_equip3_generate_asset_rental_wizard" sequence="1"/>

</odoo>
