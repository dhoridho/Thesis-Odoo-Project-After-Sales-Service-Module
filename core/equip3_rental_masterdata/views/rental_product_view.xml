<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="rental_products_template_form_view" model="ir.ui.view">
        <field name="name">rental.product.template.form.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="type">form</field>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']" position="after">
                <page string="Rental Information" name="rentalinformation"
                      attrs="{'invisible':[('rent_ok','=',False)]}">
                    <group>
                        <group>
                            <field name="rent_per_year" />
                        </group>
                        <group>
                            <field name="yearly_replacement_value" />
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="rent_per_month" />
                        </group>
                        <group>
                            <field name="replacement_value" />
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="rent_per_week" />
                        </group>
                        <group>
                            <field name="weekly_replacement_value" string="Replacement Value"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="rent_per_day" />
                        </group>
                        <group>
                            <field name="daily_replacement_value"  string="Replacement Value"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="rent_per_hour" />
                        </group>
                        <group>
                        </group>
                    </group>
                    <group>
                        <group string="Rental Product Description" >
                            <field name="description_rental" nolabel="1" placeholder="This note will show up on Rental Order."/>
                        </group>
                    </group>

                </page>
            </xpath>
            <xpath expr="//div[@class='oe_title']/div[@name='options']"
                   position="inside">
                <div>
                    <field name="rent_ok" />
                    <label for="rent_ok" />
                </div>
            </xpath>
        </field>
    </record>
</odoo>
