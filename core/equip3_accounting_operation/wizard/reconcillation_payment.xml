<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_form_reconcile_payment" model="ir.ui.view">
        <field name="name">view_form_reconcile_payment</field>
        <field name="model">account.payment.reconcile</field> 
        <field name="arch" type="xml">
            <form string="Reconcile">
                <group>
                    <field name="payment_id" invisible='1'/>
                    <field name="currency_id" invisible='1'/>
                    <field name="date_reconcile"/>
                    <field name="limit_amount" force_save = '1'/>
                    <field name="payment_amount" invisible='1' force_save = '1'/>
                    <field name="partner_id" invisible='1'/>
                    <field name="payment_type" invisible='1'/>
                    
                    <field name="allocation_line_ids" widget="one2many" string="Reconcile Invoice" attrs="{'invisible': [('payment_type', '=', 'outbound')]}">
                        <tree string="Reconcile line" editable="bottom">
                            <field name="invoice_id" string="Invoice" />
                            <field name="amount_due" readonly="1"/>
                            <field name="allocation_amount" force_save = '1'/>
                            <field name="currency_id" invisible='1'/>
                            <field name="partner_id" invisible='1'/>
                            <field name="payment_type" invisible='1'/>
                        </tree>
                    </field>

                    <field name="allocation_line_ids" widget="one2many" string="Reconcile Bill" attrs="{'invisible': [('payment_type', '=', 'inbound')]}">
                        <tree string="Reconcile line" editable="bottom">
                            <field name="invoice_id" string="Bill" />
                            <field name="amount_due" readonly="1"/>
                            <field name="allocation_amount" force_save = '1'/>
                            <field name="currency_id" invisible='1'/>
                            <field name="partner_id" invisible='1'/>
                            <field name="payment_type" invisible='1'/>
                        </tree>
                    </field>

                </group>
                <footer>
                    <button name="button_reconcille_payment" string="Reconcile" type="object" class="oe_highlight" />
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="reconcile_action" model="ir.actions.act_window">
        <field name="name">Reconcile</field>
        <field name="res_model">account.payment.reconcile</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_form_reconcile_payment"/>
        <field name="target">new</field>
    </record>
</odoo>
