<?xml version ="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="generate_closing_entries_confirmation_wizard_form_view" model="ir.ui.view">
        <field name="name">generate.closing.entries.confirmation.wizard.form.view</field>
        <field name="model">generate.closing.entries.confirmation.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirmation">
                <group>
                    <field name="name" nolabel="1" readonly="1"/>
                    <field name="fiscal_year_id" invisible="1"/>
                    <field name="journal_id" invisible="1"/>
                    <field name="closing_entry_date" invisible="1"/>
                    <field name="summary_account_id" invisible="1"/>
                    <field name="description" invisible="1"/>
                    <field name="retained_earnings_account_id" invisible="1"/>
                </group>
                <footer>
                    <button string="Continue" name="action_continue" type="object" class="oe_highlight" />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="generate_closing_entries_confirmation_action">
        <field name="name">Confirmation</field>
        <field name="res_model">generate.closing.entries.confirmation.wizard</field>
        <field name="view_mode">form</field>
        <field name="type">ir.actions.act_window</field>
        <field name="target">new</field>
    </record>
    
    <record id="generate_closing_entries_form_view" model="ir.ui.view">
        <field name="name">generate.closing.entries.form.view</field>
        <field name="model">generate.closing.entries</field>
        <field name="arch" type="xml">
            <form string="Generate Closing Entries">
                <separator string="Generate Closing Entries" />
                <group col="4">
                    <field name="fiscal_year_id" domain="[('state','=','draft'),('company_id','=',company_id)]" />
                    <field name="journal_id" domain="[('type', '=', 'opening'),('company_id','=',company_id)]" />
                    <field name="closing_entry_date"/>
                    <field name="summary_account_id"/>
                    <field name="description" />
                    <field name="retained_earnings_account_id"/>
                    <field name="company_id" invisible="1"/>
                </group>
                <footer>
                    <button string="Generate" name="action_generate" type="object" class="oe_highlight" />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="generate_closing_entries_action">
        <field name="name">Generate Closing Entries</field>
        <field name="res_model">generate.closing.entries</field>
        <field name="view_mode">form</field>
        <field name="type">ir.actions.act_window</field>
        <field name="target">new</field>
    </record>


    <menuitem id="equip3_generate_closing_entries_menu" name="Generate Closing Entries" parent="sh_sync_fiscal_year.sh_end_period_main_menu" sequence="1" action="generate_closing_entries_action" />
</odoo>
