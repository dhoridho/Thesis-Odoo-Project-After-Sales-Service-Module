<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_invoice_confirmation_availability_form">
            <field name="name">invoice.confirmation.availability.form</field>
            <field name="model">invoice.confirmation.availability</field>
            <field name="arch" type="xml">
                <form string="Confirmation">
                    <group>
                        <field name="message" readonly="1"/>
                        <field name="invoice_id" invisible="1" force_save="1"/>
                        <field name="whatsapp" invisible="1" force_save="1"/>
                    </group>
                    <footer>
                        <button name="confirm_action" string="Confirm" type="object" class="btn-primary" invisible="1"/>
                        <button string="Ok" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
