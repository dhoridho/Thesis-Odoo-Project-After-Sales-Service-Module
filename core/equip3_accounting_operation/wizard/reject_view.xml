<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_approval_reject_form" model="ir.ui.view">
            <field name="name">account.approval.reject.form</field>
            <field name="model">account.approval.reject</field>
            <field name="arch" type="xml">
                <form string="Reject">
                <group>
                    <field name="move_id" invisible="1"/>
                    <field name="feedback" />
                </group>
                    
                     <footer>
                        <button string="Reject" name="action_post_reject" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </form>

            </field>
        </record>
    </data>
</odoo>
