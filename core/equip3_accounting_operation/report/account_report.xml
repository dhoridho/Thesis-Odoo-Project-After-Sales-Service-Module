<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- QWeb Reports -->        
        <record id="action_report_payment_voucher" model="ir.actions.report">
            <field name="name">Payment Voucher</field>
            <field name="model">payment.voucher</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">equip3_accounting_operation.report_payment_voucher_template</field>
            <field name="report_file">equip3_accounting_operation.report_payment_voucher_template</field>
            <field name="binding_model_id" ref="model_payment_voucher"/>
            <field name="binding_type">report</field>
        </record>

        <record id="action_report_statement" model="ir.actions.report">
            <field name="name">Follow Up Invoice</field>
            <field name="model">followup.invoice.tmp</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">equip3_accounting_operation.report_statement_temp</field>
            <field name="report_file">equip3_accounting_operation.report_statement_temp</field>
            <field name="print_report_name">('Follow Up Invoice')</field>
            <field name="attachment">('Follow Up Invoice.pdf')</field>
            <field name="binding_model_id" ref="model_followup_invoice_tmp"/>
            <field name="binding_type">report</field>
        </record>

        <record id="action_report_receipt_giro" model="ir.actions.report">
            <field name="name">Print</field>
            <field name="model">account.multipayment</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">equip3_accounting_operation.report_receipt_giro</field>
            <field name="report_file">equip3_accounting_operation.report_receipt_giro</field>
            <field name="print_report_name">('Giro - %s' % (object.name))</field>
            <field name="binding_model_id" ref="equip3_accounting_operation.model_account_multipayment"/>
            <field name="binding_type">report</field>
        </record>

        <record id="action_report_debt_collection" model="ir.actions.report">
            <field name="name">Debt Collection</field>
            <field name="model">account.debt.collection</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">equip3_accounting_operation.report_debt_collection</field>
            <field name="report_file">equip3_accounting_operation.report_debt_collection</field>
            <field name="print_report_name">('Debt Collection')</field>
            <field name="binding_model_id" ref="equip3_accounting_operation.model_account_debt_collection"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>
