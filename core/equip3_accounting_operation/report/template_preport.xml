    <template id="template_external_layout">
        <!-- Multicompany -->
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <t t-call="equip3_accounting_operation.template_header"/>
        <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
            <t t-raw="0"/>
        </div>
        <t t-call="equip3_accounting_operation.template_footer"/>
    </template>
    <template id="template_header">
        <div class="header" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                <tbody>
                    <tr>
                        <td>
                            <center>
                                <table border="0" cellpadding="0" cellspacing="0" t-attf-style="padding:0px 20px 0px 20px; margin:0; background:#fff; line-height:20px; border-bottom:1px solid #{theme_color or '#000000'};" width="100%">
                                    <tr>
                                        <td align="left" colspan="2" style="color:#4D4D4F;padding:0 0px;" valign="top">
                                            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                <tr>
                                                    <td align="left" style="color:#4D4D4F;padding:0 0px; margin:0 " valign="middle">
                                                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 70px;" alt="Logo"/>
                                                    </td>
                                                    <td align="left" style="padding: 0 0 5px 0; line-height:16px; padding-top:16px" valign="top" width="570">
                                                        <t t-call="equip3_accounting_operation.templates_company_details"/>
                                                    </td>
                                                    <td align="left" style="padding: 0 0 5px 0; line-height:16px; padding-top:16px" valign="top" width="570">
                                                        <t t-call="equip3_accounting_operation.payment_voucher_customer_details"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </center>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </template>
    <template id="report_payment_voucher_template_main">
        <t t-call="equip3_accounting_operation.template_external_layout">
            <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
            <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color"/>
            <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color"/>
            <t t-set="company_color" t-value="o.company_id and o.company_id.company_color"/>
            <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color"/>
            <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color"/>
            <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color"/>
            <t t-set="text_color" t-value="o.company_id and o.company_id.text_color"/>
            <div class="page" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                <div class="oe_structure"/>
                <t t-call="equip3_accounting_operation.template_watermark"/>
                <div border="0" cellpadding="0" cellspacing="0" width="100%">
                    <div style="padding:0px 20px 20px 20px; margin:0; background:#fff; line-height:20px;" width="100%">
                        <div style="background-color:#f2f2f2;overflow: auto;">
                            <div style="float:right;padding:15px; width:100%;" valign="top">
                                <table t-attf-style="text-transform:capitalize; background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'};width: 100%;">
                                    <tr>
                                        <td t-attf-style="padding:9px 15px; font-weight:bold; ">
                                            <span>Payment Voucher No:</span>
                                            <!-- <span t-if="o.move_type == 'out_invoice' and (o.state == 'open' or o.state == 'posted')">Invoice No:</span>
                                            <span t-if="o.move_type == 'out_invoice' and o.state == 'proforma2'">PRO-FORMA No:</span>
                                            <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                                            <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice No:</span>
                                            <span t-if="o.move_type == 'out_refund'">Refund No:</span>
                                            <span t-if="o.move_type == 'in_refund'">Vendor Refund No:</span>
                                            <span t-if="o.move_type == 'in_invoice'">Vendor Bill No:</span> -->
                                        </td>
                                        <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                            <span class="text-left">Payment Date:</span>
                                        </td>
                                        <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                            <span class="text-left">Payment Method:</span>
                                        </td>
                                        <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                            <span class="text-left">Cheque No:</span>
                                        </td>
                                        <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                            <span class="text-left">Created By:</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td t-attf-style="text-align:left; font-weight:bold;padding:9px 15px; ">
                                            <span t-field="o.name"/>
                                        </td>
                                        <td t-attf-style="text-align:left; padding:5px 15px;">
                                            <span t-field="o.date"/>
                                        </td>
                                        <td t-attf-style="text-align:left;padding:5px 15px;">
                                            <span t-field="o.bank_id"/>
                                        </td>
                                        <td t-attf-style="text-align:left;padding:5px 15px;">
                                            <span t-field="o.cheque_number"/>
                                        </td>
                                        <td t-attf-style="text-align:left;padding:5px 15px;">
                                            <span t-field="o.create_by"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div style="padding:20px 0px 0 0; font-weight:bold; width:100%;" >
                            <t t-call="equip3_accounting_operation.report_payment_voucher_lines"/>
                        </div>
                        <div t-attf-style="border-bottom:1px solid #{'#959595'}; padding:0px">
                            <t t-call="equip3_accounting_operation.template_total_amount_word"/>
                        </div>
                        <div class="oe_structure"/>
                    </div>
                </div>
            </div>
        </t>
    </template>
    <template id="report_payment_voucher_template">
        <t t-call="web.html_container">
            <t t-as="o" t-foreach="docs">
                <t t-call="equip3_accounting_operation.report_payment_voucher_template_main" t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template>
