<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>    
        <template id="report_debt_collection">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <t t-foreach="docs" t-as="o">
                        <div class="page">
                            <div class="row" style="margin-left: 2px; margin-right: 2px;">
                                <h3>
                                    <span t-field="o.name"/>
                                </h3>
                            </div>
                            <div class="row" style="margin-left: 2px; margin-right: 2px;">
                                <table width="100%" style="border: 1px solid white;">
                                    <tr>
                                        <td style="padding-left:12px; background-color: #704F4F; color: white;" width="20%">Partner</td>
                                        <td style="text-align:center; background-color: #704F4F; color: white;"> : </td>
                                        <td style="padding-left:12px; background-color: #704F4F; color: white;"><span t-field="o.partner_id.name"/></td>
                                    </tr>
                                    <tr>
                                        <td style="padding-left:12px; background-color: #704F4F; color: white;" width="20%">Invoice Date</td>
                                        <td style="text-align:center; background-color: #704F4F; color: white;"> : </td>
                                        <td style="padding-left:12px; background-color: #704F4F; color: white;"><span t-field="o.create_date"/></td>
                                    </tr>
                                </table>
                            </div>
                            <br/><br/>
                            <style>
                                table, th, td {
                                    border: 1px solid white;
                                    border-collapse: collapse;
                                    text-align: left;
                                }
                            </style>
                            <div class="row" style="margin-left: 2px; margin-right: 2px;">
                                <table width="100%" style="border: 1px solid black;">
                                     <thead>
                                        <tr style="background-color: #A77979; padding-left: 15px; color: white;">
                                            <td style="padding-left: 15px;"><strong>Inv. Number</strong></td>
                                            <td style="padding-left: 15px;"><strong>Inv. Date</strong></td>
                                            <td style="padding-left: 15px;"><strong>Inv. Amount</strong></td>
                                            <td style="padding-left: 15px;"><strong>Status</strong></td>
                                        </tr>
                                    </thead>
                                        <t t-foreach="o.line_debt_collection" t-as="line">
                                            <tr style="background-color:#E3F4F4;">
                                                <td style="padding-left: 15px;"><span t-field="line.invoice_id"/></td>
                                                <td style="padding-left: 15px;"><span t-field="line.invoice_date"/></td>
                                                <td style="padding-left: 15px;"><span t-field="line.amount_invoice" t-options="{'widget': 'monetary', 'display_currency': (company_id or res_company).currency_id}"/></td>
                                                <td style="padding-left: 15px;"><span t-field="line.state"/></td>
                                            </tr>
                                        </t>
                                    <tbody>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </t>                  
                </t>
            </t>
        </template>
    </data>
</odoo>