<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="statement_customer_details">
        <p t-attf-style="text-transform:capitalize; color: #{theme_color or '#ffffff'}; font-weight:bold; margin:0; margin-bottom:5px; padding:10px 0px 0px 0px;">
            <strong>Invoice To:</strong>
        </p>
        <t t-if="o.partner_id">
            <span t-attf-style="text-transform:capitalize; padding:0px; margin:0; color: #{customer_color or '#ffffff'};">
                <t t-if="o.company_id and o.company_id.is_customer_bold">
                    <strong>
                        <span t-field="o.partner_id"/>
                    </strong>
                </t>
                <t t-if="not o.company_id.is_customer_bold">
                    <span t-field="o.partner_id"/>
                </t>
            </span>
            <p t-attf-style="color: #{customer_address_color or '#ffffff'};">
                <span t-esc="o._get_street(o.partner_id)"/>
                <br/>
                <span t-esc="o._get_address_details(o.partner_id)"/>
                <br/>
                <t t-if="o.partner_id.mobile">
                    <strong>Mobile: </strong>
                    <span t-field="o.partner_id.mobile"/>
                    <br/>
                </t>
                <t t-if="o.partner_id.phone">
                    <strong>Phone: </strong>
                    <span t-field="o.partner_id.phone"/>
                    <br/>
                </t>
                <t t-if="o.partner_id.email">
                    <strong>Email: </strong>
                    <span t-field="o.partner_id.email"/>
                    <br/>
                </t>
            </p>
        </t>
    </template>
    <template id="statement_company_details">
        <p t-attf-style="text-transform:capitalize; color: #{theme_color or '#ffffff'}; font-weight:bold; margin:0; margin-bottom:5px; padding:10px 0px 0px 0px;">
            <strong></strong>
        </p>
        <span style="text-transform:capitalize; padding:0px; margin:0; color: #51565b;">
            <t t-if="o.company_id and o.company_id.is_company_bold">
                <strong>
                    <span t-field="o.company_id.partner_id"/>
                </strong>
            </t>
            <t t-if="not o.company_id.is_company_bold">
                <span t-field="o.company_id.partner_id"/>
            </t>
        </span>
        <div style="color: #51565b;">
            <span t-esc="o._get_street(o.company_id.partner_id)"/>
            <br/>
            <span t-esc="o._get_address_details(o.company_id.partner_id)"/>
            <br/>
            <t t-if="o.company_id.partner_id.mobile">
                <strong>Mobile: </strong>
                <span t-field="o.company_id.partner_id.mobile"/>
                <br/>
            </t>
            <t t-if="o.company_id.partner_id.phone">
                <strong>Phone: </strong>
                <span t-field="o.company_id.partner_id.phone"/>
                <br/>
            </t>
            <t t-if="o.company_id.partner_id.email">
                <strong>Email: </strong>
                <span t-field="o.company_id.partner_id.email"/>
                <br/>
            </t>
        </div>
    </template>

    <template id="report_statement_lines">
        <span t-field="o.overdue_template"/>
        <br/>
        <br/>
        <table BORDERCOLOR="#{theme_color or '#000000'}" border="1" cellpadding="0" cellspacing="0" class="table table-bordered" style="border:0.5px solid #ccc;  border-collapse: collapse; text-transform:capitalize; padding:15px;border-bottom:1px solid #ccc;" width="100%">
            <thead>
                <tr t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'};">
                    <td align="left" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="20%">Reference Number</td>
                    <td align="left" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="20%">Date</td>
                    <td align="left" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="20%">Date Due</td>
                    <td align="left" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="20%">Communication</td>
                    <td align="right" t-attf-style="padding:5px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="20%">Total Due</td>
                </tr>
            </thead>
            <tbody>
                <t t-as="l" t-foreach="o.move_id">
                    <t t-set="common_id" t-value="0"/>
                    <tr t-att-style="'page-break-inside: avoid !important; color: %s; background-color: %s '%(text_color, ol_color)  ">
                        <td class="text-left" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important; '">
                            <span t-esc="l.name"/>
                        </td>
                        <td class="text-left" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important; '">
                            <span t-esc="l.invoice_date"/>
                        </td>
                        <td class="text-left" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important; '">
                            <span t-esc="l.invoice_date_due"/>
                        </td>
                        <td class="text-left" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important; '">
                            <span t-esc="l.ref"/>
                        </td>
                        <td class="text-right" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important; '">
                            <span t-esc="l.amount_residual" t-options="{'widget': 'monetary', 'display_currency': l.currency_id}"/>
                        </td>
                    </tr>
                </t>
                <tr t-att-style="'page-break-inside: avoid !important; color: %s; background-color: %s '%(text_color, ol_color)  ">
                    <td class="text-right" colspan='4'  t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important; '">
                        Total Overdue
                    </td>
                    <td class="text-right" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important; '">
                        <span t-esc="o.total_overdue" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                    </td>
                </tr>
            </tbody>
        </table>
    </template>
</odoo>