<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="payment_voucher_customer_details">
        <p t-attf-style="text-transform:capitalize; color: #{theme_color or '#ffffff'}; font-weight:bold; margin:0; margin-bottom:5px; padding:10px 0px 0px 0px; border-top:1px solid #ececec;">
            <strong>Vendor Address</strong>
        </p>
        <t t-if="o.line_ids[0].invoice_number_id.partner_id">
            <span t-attf-style="text-transform:capitalize; padding:0px; margin:0; color: #{customer_color or '#ffffff'};">
                <t t-if="o.company_id and o.company_id.is_customer_bold">
                    <strong>
                        <span t-field="o.line_ids[0].invoice_number_id.partner_id"/>
                    </strong>
                </t>
                <t t-if="not o.company_id.is_customer_bold">
                    <span t-field="o.line_ids[0].invoice_number_id.partner_id"/>
                </t>
            </span>
            <p t-attf-style="color: #{customer_address_color or '#ffffff'};">
                <span t-esc="o._get_street(o.line_ids[0].invoice_number_id.partner_id)"/>
                <br/>
                <span t-esc="o._get_address_details(o.line_ids[0].invoice_number_id.partner_id)"/>
                <br/>
                <t t-if="o.line_ids[0].invoice_number_id.partner_id.mobile">
                    <strong>Mobile: </strong>
                    <span t-field="o.line_ids[0].invoice_number_id.partner_id.mobile"/>
                    <br/>
                </t>
                <t t-if="o.line_ids[0].invoice_number_id.partner_id.phone">
                    <strong>Phone: </strong>
                    <span t-field="o.line_ids[0].invoice_number_id.partner_id.phone"/>
                    <br/>
                </t>
                <t t-if="o.line_ids[0].invoice_number_id.partner_id.email">
                    <strong>Email: </strong>
                    <span t-field="o.line_ids[0].invoice_number_id.partner_id.email"/>
                    <br/>
                </t>
                <t t-if="o.line_ids[0].invoice_number_id.partner_id.vat">
                    <strong>Vat: </strong>
                    <span t-field="o.line_ids[0].invoice_number_id.partner_id.vat"/>
                </t>
            </p>
        </t>
    </template>
    <template id="templates_company_details">
        <p t-attf-style="text-transform:capitalize; color: #{theme_color or '#ffffff'}; font-weight:bold; margin:0; margin-bottom:5px; padding:10px 0px 0px 0px; border-top:1px solid #ececec;">
            <strong>Address</strong>
        </p>
        <span style="text-transform:capitalize; padding:0px; margin:0; color: #51565b;">
            <t t-if="o.company_id and o.company_id.is_company_bold">
                <strong>
                    <span t-field="o.company_id.partner_id"/>
                </strong>
            </t>
            <t t-if="not o.company_id.is_company_bold">
                <span t-field="o.company_id.partner_id"/>
            </t>
        </span>
        <div style="color: #51565b;">
            <span t-esc="o._get_street(o.company_id.partner_id)"/>
            <br/>
            <span t-esc="o._get_address_details(o.company_id.partner_id)"/>
            <br/>
            <t t-if="o.company_id.partner_id.mobile">
                <strong>Mobile: </strong>
                <span t-field="o.company_id.partner_id.mobile"/>
                <br/>
            </t>
            <t t-if="o.company_id.partner_id.phone">
                <strong>Phone: </strong>
                <span t-field="o.company_id.partner_id.phone"/>
                <br/>
            </t>
            <t t-if="o.company_id.partner_id.email">
                <strong>Email: </strong>
                <span t-field="o.company_id.partner_id.email"/>
                <br/>
            </t>
            <t t-if="o.company_id.is_show_bank_details">
                <strong>Bank: </strong>
                <span t-esc="o.company_id.report_bank_id.acc_number"/>
            </t>
        </div>
    </template>
    <template id="template_watermark">
        <t t-if="o.company_id and o.company_id.is_show_watermark">
            <div class="watermark text-center" style="position:absolute; opacity:0.25; width:100%; height:auto; z-index:1000; -webkit-transform: rotate(-45deg); -moz-transform:rotate(-45deg); bottom:-600px; left:-100px;">
                <t t-if="o.company_id.watermark == 'logo'">
                    <img style="max-height: 500px; height:auto;" t-att-src="'data:image/png;base64,%s' %  to_text(o.company_id.watermark_logo)" t-if="o.company_id"/>
                </t>
                <t t-if="o.company_id.watermark != 'logo'">
                    <span t-att-style="'font-size:'+str(o.company_id.watermark_text_font_size)+'em; color:'+o.company_id.watermark_text_color">
                        <span t-field="o.company_id.watermark_text" t-if="o.company_id.watermark == 'text'"/>
                        <span t-field="o.state" t-if="o.company_id.watermark == 'status'"/>
                    </span>
                </t>
            </div>
        </t>
    </template>
    <template id="template_total_amount_word">
        <t t-if="o.company_id.add_amount_in_words == True">
            <span t-attf-style="color: #{text_color or '#000000'};padding-bottom: 5px;">Total in word:- 
                <t t-esc="o.amount_to_text"/>
            </span>
        </t>
    </template>
    <template id="report_payment_voucher_lines">
        <table BORDERCOLOR="#{theme_color or '#000000'}" border="1" cellpadding="0" cellspacing="0" class="table table-bordered" style="border:0.5px solid #ccc;  border-collapse: collapse; text-transform:capitalize; padding:15px;border-bottom:1px solid #ccc;" width="100%">
            <thead>
                <tr t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'};">
                    <td align="center" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="12%">No.</td>
                    <td align="left" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="22%">BIll Number</td>
                    <td align="left" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="22%">BIll Date</td>
                    <td align="left" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="22%">Vendor</td>
                    <td align="right" t-attf-style="padding:5px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="22%">Ammount Paid</td>
                </tr>
            </thead>
            <tbody>
                <t t-as="l" t-foreach="o.line_ids">
                    <tr t-att-style="'page-break-inside: avoid !important; color: %s; background-color: %s '%(text_color, ol_color)  ">
                        <td class="text-center" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important; '">
                            <span t-esc="l_index+1"/>
                        </td>                            
                        <td class="text-left" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important; '">
                            <span t-field="l.invoice_number_id"/>
                        </td>
                        <td class="text-left" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important; '">
                            <span t-field="l.invoice_date"/>
                        </td>
                        <td class="text-left" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important; '">
                            <span t-field="l.invoice_number_id.partner_id.name"/>
                        </td>
                        <td class="text-right" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important; '">
                            <span t-field="l.amount" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                        </td>
                    </tr>
                </t>
                <t t-call="equip3_accounting_operation.payment_voucher_subtotal_tem"/>
            </tbody>
        </table>
        
    </template>
    <template id="payment_voucher_subtotal_tem">
        <tr>
            <td align="right" colspan="4" t-attf-style="padding:5px 10px; border:0.5px solid !important; border-right:0px solid !important; font-weight:bold;">SubTotal</td>
            <td align="right" tyle="padding:9px 0px 7px 10px;">
                <span t-field="o.amount" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
            </td>
        </tr> 
    </template>

    <template id="payment_voucher_signature">
        <t t-if="o.company_id.is_show_signature == True">
            <img style="max-height: 80px; padding:5px;" t-att-src="'data:image/png;base64,%s' %  to_text(o.company_id.signature)" t-if="o.company_id.signature"/>
        </t>
    </template>

    <template id="payment_voucher_barcode">
        <div class="row" t-if="o.company_id.is_show_barcode == True">
            <div style="page-break-inside: avoid !important; position:absolute; width:100%; text-align:center;">
                <img style="width:190px; height:35px;" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.name, 600, 100)"/>
            </div>
        </div>
    </template>

    <template id="template_footer">
        <div class="footer" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'" t-if="o.company_id.report_footer_selection == 'standard'">
            <div class="text-center" style="border-top: 1px solid black;">
                <ul class="list-inline mb4">
                    <li t-if="company.phone">Phone: 
                        <span t-field="company.phone"/></li>
                    <li t-if="company.email">Email: 
                        <span t-field="company.email"/></li>
                    <li t-if="company.website">Web: 
                        <span t-field="company.website"/></li>
                    <li t-if="company.vat">
                        <t t-esc="company.country_id.vat_label or 'TIN'"/>: 
                        <span t-field="company.vat"/></li>
                </ul>
                <div name="financial_infos">
                    <span t-field="company.report_footer"/>
                </div>
                <div class="text-muted">Page: 
                    <span class="page"/>
                    / 
                    <span class="topage"/></div>
            </div>
        </div>
        <div class="footer" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'" t-if="o.company_id.report_footer_selection == 'multi_columns'">
            <div class="row">
                <div class="col-md-4 text-center" style="width:33%; display:inline-block; vertical-align: top;margin-top: 25px;height: 128px;">
                    <span t-field="o.company_id.name"/>
                    <br/>
                    <span t-esc="o._get_street(o.company_id.partner_id)"/>
                    <br/>
                    <span t-esc="o._get_address_details(o.company_id.partner_id)"/>
                </div>
                <div class="col-md-4 text-center" style="width:33%; display:inline-block; vertical-align: top;margin-top: 40px;height: 128px;">
                    <span t-field="o.company_id.phone"/>
                    <br/>
                    <span t-field="o.company_id.website"/>
                    <br/>
                    <span t-field="o.company_id.email"/>
                    <br/>
                    <!-- Put social in one line
                    <icon>Website name + <icon>twitter + <icon>googleplus
                     -->
                </div>
                <div class="col-md-4 text-center" style="width:33%; margin-bottom:20px; display: inline-block; vertical-align: top;">
                    <img style='max-height: 110px;max-width:100%;' t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.logo_footer)"/>
                </div>
            </div>
        </div>
    </template>
</odoo>