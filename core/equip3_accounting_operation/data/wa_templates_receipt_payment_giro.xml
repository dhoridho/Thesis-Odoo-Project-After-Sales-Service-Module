<odoo>
    <record id="wa_template_req_receipt_giro_wa" model="mail.template">
        <field name="name">Request for Approval receipt giro</field>
        <field name="email_from">${ctx.get('email_from')}</field>
        <field name="email_to">${ctx.get('email_to')}</field>
        <field name="subject">Request For receipt giro</field>
        <field name="model_id" ref="equip3_accounting_operation.model_account_multipayment"/>
        <field name="auto_delete" eval="True"/>
        <field name="body_html">
            <![CDATA[<div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px;">
            <p style="margin: 0px; padding: 0px; font-size: 13px;">
                Dear ${approver_name},${br}
                You have approval pending that needs your decision to approve or reject the receipt giro.${br}
                ${submitter_name} has requested a ${currency} receipt giro to ${partner_name} is due on ${due_date} at ${date}${br}
                You can approve or reject the receipt giro by clicking this link:
                ${url}${br}
                Thank you,
                This is an automatically generated message, please do not reply.
            </p>
            ]]>
        </field>
    </record>

