<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="email_template_inv_wa" model="mail.template">
        <field name="name">Request for Approval Matrix</field>
        <field name="email_from">${ctx.get('email_from')}</field>
        <field name="email_to">${ctx.get('email_to')}</field>
        <field name="subject">Request For Approval</field>
        <field name="model_id" ref="equip3_accounting_operation.model_account_move"/>
        <field name="auto_delete" eval="True"/>
        <field name="body_html"><![CDATA[
            Dear ${approver_name}.${br} ${br}You have approval pending that needs your decision to approve or reject the invoice. ${br} ${submitter_name} has requested a ${currency} invoice to ${partner_name} is due on ${due_date} at ${date_invoice}.${br} ${br}You can approve or reject the invoice by clicking this link: ${br}${url}
            ${br}Thank You, ${br} This is an automatically generated message, please do not reply.
            ]]></field>
    </record>

    <record id="email_template_inv_wa_approval" model="mail.template">
        <field name="name">Approval Matrix</field>
        <field name="email_from">${ctx.get('email_from')}</field>
        <field name="email_to">${ctx.get('email_to')}</field>
        <field name="subject">Request For Approval</field>
        <field name="model_id" ref="equip3_accounting_operation.model_account_move"/>
        <field name="auto_delete" eval="True"/>
        <field name="body_html"><![CDATA[
            Dear ${submitter_name}.${br} 
            We have received a response to your request for an Invoice on ${create_date}. 
            ${br}This notification serves as confirmation that your invoice has been approved.
            ${br}Thank You, ${br} This is an automatically generated message, please do not reply.
            ]]></field>
    </record>

    <record id="email_template_inv_after_due_date" model="mail.template">
        <field name="name">Reminder Invoice After Due Date</field>
        <field name="email_from">${ctx.get('email_from')}</field>
        <field name="email_to">${ctx.get('email_to')}</field>
        <field name="subject">Reminder Invoice on Due Date</field>
        <field name="model_id" ref="equip3_accounting_operation.model_account_move"/>
        <field name="auto_delete" eval="True"/>
        <field name="body_html"><![CDATA[
            Dear ${user}.${br} 
            You have invoice pass due date, there was ${amount} on branch ${branch_id}.${br} 
            Clik on this link if you want to check the invoice(s).${br} 
            ${link}.${br} 
            Remind the customer to pay the invoice after the due date to avoid payment penalty. 
            ${br}
            Thank you,${br}
            This is an automatically generated WhatsApp Message, please do not reply.
            ]]></field>
    </record>

