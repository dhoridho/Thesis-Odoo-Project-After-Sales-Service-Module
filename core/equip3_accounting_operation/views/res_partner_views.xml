<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_partner_form_inherit_operation" model="ir.ui.view">
        <field name="name">view.partner.form.inherit.operation</field> 
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            
            <page name="accounting" position="inside">
                    <group string="Invoices / Bills Signature" >
                        <group>
                            <field name="signature_to_confirm"/>
                        </group>

                    </group>
            </page>

            <xpath expr="//field[@name='company_id']" position="attributes">
                <attribute name="readonly">0</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_partner_structured_form_branch_inherit" model="ir.ui.view">
        <field name="name">view.partner.structured.form.branch.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="branch.view_partner_structured_form_branch"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='branch_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_partner_form_inherit_intercompany" model="ir.ui.view">
        <field name="name">view.partner.form.inherit.intercompany</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="bi_inter_company_transfer.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='related_company_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="vendor_addition_evaluation_inherit" model="ir.ui.view">
        <field name="name">vendor.addition.evaluation.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="vendor_evaluation.vendor_addition_evaluation"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='visible_eval']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='create_new_evaluation']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//label[@for='visible_eval']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="res_partner_form_view_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.view.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="acrux_chat_sale.res_partner_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='contact_ids']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>