    <record id="view_move_form_inherit_accounting_operation" model="ir.ui.view">
        <field name="name">view.move.form.inherit.accounting.operation</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="equip3_accounting_masterdata.view_move_form_inherit_accounting_masterdata" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_untaxed']" position="attributes">
                <attribute name="widget">monetary</attribute>
            </xpath>

            <xpath expr="//field[@name='fiscal_year']" position="after">
                <field name="visible_received_date"/>
                <field name="received_date" nolabel="1" attrs ="{'invisible': [('visible_received_date', '=', False)]}"/>
            </xpath>

            <xpath expr="//field[@name='company_id']" position="after">
                <field name="is_invoice_approval_matrix" invisible="1"/>
                <field name="approval_matrix_id" attrs="{'required': [('is_invoice_approval_matrix', '=', True)], 'invisible': [('is_invoice_approval_matrix', '=', False)]}"/>
                <field name="approval_matrix_line_id" invisible="1"/>
                <field name="is_approve_button" invisible="1"/>
                <field name="approvers_ids" widget="many2many_tags" invisible="1"/>
                <field name="approved_user_ids" widget="many2many_tags" invisible="1"/>
            </xpath>

            <xpath expr="//button[@name='action_post'][1]" position="attributes">
                <attribute name="attrs">{'invisible': ['|', '|', '|', ('state', '!=', 'draft'), ('auto_post', '=', True), ('move_type', '!=', 'entry'), ('is_invoice_approval_matrix', '=', True)]}</attribute>
            </xpath>

            <xpath expr="//button[@name='action_post'][2]" position="attributes">
                <attribute name="attrs">{'invisible': ['|', '|', '|', ('state', '!=', 'draft'), ('auto_post', '=', True), ('move_type', '=', 'entry'), ('is_invoice_approval_matrix', '=', True)]}</attribute>
            </xpath>

            <xpath expr="//button[@name='action_post'][2]" position="after">
                <button name="action_request_for_approval" string="Request For Approval" class="oe_highlight" type="object" groups="account.group_account_invoice" attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('is_invoice_approval_matrix', '=', False)]}"/>
                <button name="action_approve" string="Approve" attrs="{'invisible': ['|', '|', ('is_invoice_approval_matrix','=', False), ('is_approve_button', '=', False), ('state', '!=', 'to_approve')]}" type="object" class="btn btn-primary"/>

                <button name="action_reject" string="Reject" attrs="{'invisible': ['|', '|', ('is_invoice_approval_matrix','=', False), ('is_approve_button', '=', False), ('state', '!=', 'to_approve')]}" type="object" class="btn btn-primary"/>
            </xpath>

            <field name="state" position="attributes">
                <attribute name="attrs">{'invisible': [('is_invoice_approval_matrix', '=', True)]}</attribute>
            </field>

            <field name="state" position="after">
                <field name="state1" widget="statusbar" statusbar_visible="draft,to_approve,posted" attrs="{'invisible': ['|', ('is_invoice_approval_matrix', '=', False), ('state', '=', 'rejected')]}"/>
                <field name="state2" widget="statusbar" statusbar_visible="draft,to_approve,rejected" attrs="{'invisible': ['|', ('is_invoice_approval_matrix', '=', False), ('state', '!=', 'rejected')]}"/>
            </field>

            <page name="other_info" position="after">
                <page name="approved_matrix_ids" string="Approval Matrix Line" attrs="{'invisible': ['|', ('approval_matrix_id', '=', False), ('is_invoice_approval_matrix', '=', False)]}">
                    <field name="approved_matrix_ids" context="{'approved_matrix_ids': approved_matrix_ids}" force_save="1">
                        <tree create="0" edit="0" delete="0">
                            <field name="sequence" />
                            <field name="user_ids" widget="many2many_tags"/>
                            <field name="minimum_approver" />
                            <field name="approver_state" readonly="1" force_save="1"/>
                            <field name="state_char" />
                            <field name="time_stamp" invisible="1"/>
                            <field name="feedback" />
                        </tree>
                    </field>
                </page>
            </page>
        </field>
    </record>

