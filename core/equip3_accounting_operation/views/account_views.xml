    <record id="mr_account_move_form" model="ir.ui.view">
        <field name="name">mr_account_move_form</field>
        <field name="model">account.move</field>
        <field name="priority">18</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/div[@name='button_box']" position="inside">
                <field name="reversal_avail" invisible="1"/>
                <button name="button_reverse_journal" class="oe_stat_button" icon="o-hm-smart-all-operations" type="object" attrs="{'invisible': ['|', '|', ('move_type', '!=', 'entry'), ('id', '=', False), ('reversal_avail', '=', False)]}" string="Reversal Journal Entry"/>
            </xpath>
            <xpath expr="//sheet/group/group[@id='header_left_group']/field[@name='partner_id']" position="attributes">
                <attribute name="attrs">{'required': [('move_type', 'in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))], 'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}
                </attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_date']" position="attributes">
                <attribute name="attrs">{'required': [('move_type', 'in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))], 'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}
                </attribute>
            </xpath>
            <!-- <xpath expr="//page[@id='aml_tab']/field[@name='line_ids']/tree" position="attributes">
                <attribute name="create">0</attribute>
                <attribute name="edit">0</attribute>
            </xpath> -->
            <!-- <xpath expr="//page[@id='aml_tab']/field[@name='line_ids']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath> -->
            <xpath expr="//page[@id='aml_tab']/field[@name='line_ids']//field[@name='analytic_tag_ids']" position="attributes">
                <attribute name="required">0</attribute>
            </xpath>
           <!-- <xpath expr="//field[@name='invoice_line_ids']//field[@name='analytic_tag_ids']" position="attributes">-->
               <!-- <attribute name="required">1</attribute>-->
           <!-- </xpath> -->
            <xpath expr="//field[@name='invoice_line_ids']//field[@name='analytic_tag_ids']" position="after">
                <field name="is_analytic_tags" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']//field[@name='analytic_tag_ids']" position="attributes">
                    <!-- <attribute name="domain">[('id', 'in', parent.analytic_group_ids)]</attribute> -->
                    <attribute name="attrs">{'required': [('is_analytic_tags', '=', True)]}</attribute>
            </xpath>
            
            <xpath expr="//group[@id='other_tab_group']" position="inside">
                <group string="Other Information" name="mr_other_info">
                    <field name="create_uid" string="Created By" readonly="1"/>
                    <field name="create_date" string="Created Date" readonly="1"/>
                    <field name="is_merge_to" invisible="1"/>
                </group>
                <group string="Invoice Merge" name="invoice_merge" attrs="{'invisible': ['|',('move_type', 'not in', ('out_invoice', 'out_refund', 'out_receipt')), ('is_merge_to', '=', False)]}" >
                    <field name="new_invoice_id" string="Invoice Merged To" readonly="1"  />
                </group>
                <group string="Bills Merge" name="bills_merge" attrs="{'invisible': ['|',('move_type', 'not in', ('in_invoice', 'in_refund', 'in_receipt')), ('is_merge_to', '=', False)]}" >
                    <field name="new_invoice_id" string="Bills Merged To" readonly="1" />
                </group>
            </xpath>

            <xpath expr="//group[@id='other_tab_entry_group']" position="inside">
                <group string="Other Information" name="mr_other_entry_info">
                    <field name="create_uid" string="Created By" readonly="1"/>
                    <field name="create_date" string="Created Date" readonly="1"/>
                </group>
            </xpath>

            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="mr_show_analytic_account" string="Show Analytic" invisible="1"/>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='analytic_account_id']" position="attributes">
                <attribute name="attrs">{'column_invisible': [('parent.mr_show_analytic_account', '=', False)]}</attribute>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='asset_category_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']//field[@name='name']" position="attributes">
                <attribute name="required">1</attribute>
            </xpath>

            <xpath expr="//field[@name='line_ids']/tree/field[@name='asset_category_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='line_ids']/tree/field[@name='partner_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='line_ids']/tree/field[@name='branch_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='line_ids']/tree/field[@name='analytic_account_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            
            <!-- <field name="payment_reference" position="after">
                <field name="invoice_origin_id"
                       attrs="{'invisible':[('move_type', 'in', ('in_invoice', 'in_receipt', 'out_invoice'))]}"
                       />
                <field name="invoice_origin_date" attrs="{'invisible':[('move_type', 'in', ('in_invoice', 'in_receipt', 'out_invoice'))]}"/>
                <field name="reason" attrs="{'invisible':[('move_type', 'in', ('in_invoice', 'in_receipt', 'out_invoice'))]}"/>
                <field name="ref_no" attrs="{'invisible':[('move_type', 'in', ('in_invoice', 'in_receipt', 'out_invoice'))]}"/> 
            </field> -->

            <field name="payment_reference" position="after">
                <field name="invoice_origin_id"
                        attrs="{'invisible': [('move_type', 'not in', ('out_receipt', 'in_receipt'))]}"
                        />
                <field name="invoice_origin_date" 
                        attrs="{'invisible': [('move_type', 'not in', ('out_receipt', 'in_receipt'))]}"
                        />
                <field name="reason" 
                        attrs="{'invisible': [('move_type', 'not in', ('out_refund', 'in_refund', 'out_receipt', 'in_receipt'))]}"
                        />
                <field name="ref_no" 
                        attrs="{'invisible': [('move_type', 'not in', ('in_refund', 'out_receipt', 'in_receipt'))]}"
                        /> 
            </field>

            <xpath expr="//sheet/group/group[@id='header_left_group']/field[@name='payment_reference']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//sheet/group/group[@id='header_right_group']/field[@name='date']" position="attributes">
                <attribute name="string">Date</attribute>
            </xpath>

            <xpath expr="//field[@name='line_ids']/tree/field[@name='branch_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//sheet/group/group[@id='header_right_group']" position="inside">
                <field name="is_fiscal_book_exclude" attrs ="{'invisible': [('move_type', 'not in', ('entry'))]}"/>
            </xpath>

            <!-- <xpath expr="//page[@id='aml_tab']" position="attributes">
                <attribute name="groups">equip3_accounting_accessright_setting.group_accountant_staff,account.group_account_user,-account.group_account_readonly</attribute>
            </xpath> -->

            <xpath expr="//field[@name='fiscal_year']" position="after">
                <field name="analytic_tag_dynamic" widget="many2many_tags" invisible='1'/>
            </xpath>
            
            <xpath expr="//field[@name='line_ids']" position="attributes">
                <attribute name="groups">equip3_accounting_accessright_setting.group_accountant_staff,account.group_account_user</attribute>
                <attribute name="context">{'default_move_type': context.get('default_move_type'), 'journal_id': journal_id, 'default_partner_id': commercial_partner_id, 'default_currency_id': currency_id or company_currency_id, 'default_analytic_tag_ids': analytic_tag_dynamic}</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']" position="attributes">
                <attribute name="groups">equip3_accounting_accessright_setting.group_accountant_staff,account.group_account_user</attribute>
                <attribute name="context">{'default_move_type': context.get('default_move_type'), 'journal_id': journal_id, 'default_partner_id': commercial_partner_id, 'default_currency_id': currency_id or company_currency_id, 'default_analytic_tag_ids': analytic_tag_dynamic}</attribute>
            </xpath>

            <xpath expr="//field[@name='is_down_payment']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            
            <xpath expr="//field[@name='line_ids']/tree/button[@name='action_automatic_entry']" position="attributes">
                <attribute name="attrs">{'invisible': [('company_id', '!=', False)]}</attribute>
            </xpath>

            <!-- <xpath expr="//div[@name='journal_div']" position="after">
                <field name="payment_id" string="Source Origin" attrs="{'invisible': [('move_type', 'not in', ['entry'])]}" readonly='1'/>
            </xpath> -->

        </field>
    </record>

