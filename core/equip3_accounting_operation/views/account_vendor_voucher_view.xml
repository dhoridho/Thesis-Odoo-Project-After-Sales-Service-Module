<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="vendor_view_voucher_form" model="ir.ui.view">
            <field name="name">custom.view.voucher.form</field>
            <field name="model">payment.voucher</field>
            <field name="arch" type="xml">
                <form string="Payment Voucher">
                    <header>
                        <button name="action_request_for_approval" string="Request For Approval" class="oe_highlight" type="object" attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('is_payment_voucher_approval_matrix', '=', False)]}"/>
                        
                        <button name="action_approve" string="Approve" attrs="{'invisible': ['|', '|', ('is_payment_voucher_approval_matrix','=', False), ('is_approve_button', '=', False), ('state', '!=', 'to_approve')]}" type="object" class="btn btn-primary"/>

                        <button name="action_reject" string="Reject" attrs="{'invisible': ['|', '|', ('is_payment_voucher_approval_matrix','=', False), ('is_approve_button', '=', False), ('state', '!=', 'to_approve')]}" type="object" class="btn btn-primary"/>

                        <button name="submit" string="Submit" class="oe_highlight" type="object" states="draft" attrs="{'invisible': ['|', ('is_payment_voucher_approval_matrix', '=', True)]}"/>
                        <button name="verify" string="Verify" class="oe_highlight" type="object" states="submitted" />
                        <button name="cancel" string="Cancel" class="oe_highlight" type="object" states="draft,submitted" />
                        <button name="set_to_draft" string="set to Draft" class="oe_highlight" type="object" states="canceled" />
                        <button name="pay" string="Pay" class="oe_highlight" type="object" states="verified" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,submitted,verified,paid" attrs="{'invisible': [('is_payment_voucher_approval_matrix', '=', True)]}"/>
                        <field name="state1" widget="statusbar" statusbar_visible="draft,to_approve,verified,paid" attrs="{'invisible': ['|', ('is_payment_voucher_approval_matrix', '=', False), ('state', '=', 'rejected')]}"/>
                        
                        <field name="state2" widget="statusbar" statusbar_visible="draft,to_approve,rejected" attrs="{'invisible': ['|', ('is_payment_voucher_approval_matrix', '=', False), ('state', '!=', 'rejected')]}"/>
                    </header>

                    <sheet>
                        <!-- <widget name="web_ribbon" text="PAID" bg_color="bg-success" attrs="{'invisible':[('state','!=','paid')]}" /> -->
                        <div name="button_box" class="oe_button_box">
                            <button class="oe_stat_button" type="object" name="get_payments" icon="o-hm-smart-all-3-payments">
                                <field string="Payments" name="payment_count" widget="statinfo"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="is_cutoff_date" invisible ="1"/>
                                <field name="partner_ids" string="Vendor" widget="many2many_tags" attrs="{'readonly':[('state','!=','draft')]}" required="1"/>
                                <field name="date" attrs="{'readonly':[('state','!=','draft')]}" required="1"/>
                                <field name="invoice_cutoff_date" readonly="1" force_save="1" attrs="{'invisible': [('is_cutoff_date', '=', False)]}"/>
                                <field name="bank_id" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="cheque_number" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="cheque_date" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="create_by" readonly="1"/>
                                <field name="create_date" readonly="1"/>
                            </group>
                            <group>
                                <field name="vendor_allowed_ids" invisible="1"/>
                                <field name="vendor_bill_ids" widget="many2many_tags" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="currency_id" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="remarks" string="Remarks" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="company_id" readonly="1"/>
                                <field name="branch_id" attrs="{'readonly':[('state','!=','draft')]}" required="1" options="{'no_create': True, 'no_create_edit': True}"/>
                                <field name="approval_matrix_id" attrs="{'required': [('is_payment_voucher_approval_matrix', '=', True)], 'invisible': [('is_payment_voucher_approval_matrix', '=', False)]}"/>
                                <field name="is_payment_voucher_approval_matrix" invisible="1"/>
                                <field name="approval_matrix_line_id" invisible="1"/>
                                <field name="is_approve_button" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="line_ids" string="Bill Info">
                                <group name="invoice_info" string="Bill Information">
                                    <field name="line_ids" nolabel="1" domain="[('state','=','processing')]">
                                        <tree editable="top" create="false" delete="false">
                                            <field name="voucher_id" invisible="1"/>
                                            <field name="voucher_state" invisible="1"/>
                                            <field name="invoice_number_id" string="Bill Number" readonly="1"/>
                                            <field name="partner_id" readonly="1"/>
                                            <field name="invoice_date" readonly="1"/>
                                            <field name="untaxed_amount" widget='monetary' options="{'currency_field': 'currency_id'}" readonly="1"/>
                                            <field name="tax_amount" widget='monetary' options="{'currency_field': 'currency_id'}" readonly="1"/>
                                            <field name="total_invoice_amount" widget='monetary' options="{'currency_field': 'currency_id'}" readonly="1"/>
                                            <field name="amount_due" widget='monetary' options="{'currency_field': 'currency_id'}" readonly="1"/>
                                            <field name="amount" widget='monetary' options="{'currency_field': 'currency_id'}" required="1" attrs="{'readonly':[('voucher_state','!=','draft')]}" sum="Amount"/>
                                            <field name="state" invisible="1"/>
                                        </tree>
                                    </field>
                                </group>
<!--                                <group class="oe_subtotal_footer oe_right" colspan="2" name="voucher_total">-->
<!--                                    <field name="amount_subtotal" widget='monetary' options="{'currency_field': 'currency_id'}" readonly="1"/>-->
<!--                                    <field name="amount_grandtotal" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>-->
<!--                                </group>-->
                            </page>
                            <page name="approved_matrix_ids" string="Approval Matrix Line" attrs="{'invisible': ['|', ('approval_matrix_id', '=', False), ('is_payment_voucher_approval_matrix', '=', False)]}">
                                <field name="approved_matrix_ids" context="{'approved_matrix_ids': approved_matrix_ids}" force_save="1">
                                    <tree create="0" edit="0" delete="0">
                                        <field name="sequence" />
                                        <field name="user_ids" widget="many2many_tags"/>
                                        <field name="minimum_approver" />
                                        <field name="state_char" />
                                        <field name="time_stamp" invisible="1"/>
                                        <field name="feedback" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="vendor_view_voucher_tree" model="ir.ui.view">
            <field name="name">vendor.view.voucher.tree</field>
            <field name="model">payment.voucher</field>
            <field name="arch" type="xml">
                <tree string="Payment Voucher">
                    <field name="partner_ids" widget="many2many_tags"/>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="amount" style="text-align: center;"/>
                    <field name="state" optional="show" widget="badge" decoration-success="state == 'paid'" decoration-primary="state =='verified'" decoration-success2="state == 'submitted'" decoration-muted="state == 'draft'" decoration-danger3="state == 'canceled'" decoration-danger="state == 'rejected'" decoration-warning3="state == 'to_approve'" decoration-warning2="state == 'approved'"/>
                </tree>
            </field>
        </record>
        <record id="vendor_voucher_payment_action" model="ir.actions.act_window">
            <field name="name">Payment Voucher</field>
            <field name="res_model">payment.voucher</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('equip3_accounting_operation.vendor_view_voucher_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('equip3_accounting_operation.vendor_view_voucher_form')})]"/>
        </record>
        <menuitem action="vendor_voucher_payment_action" id="menu_action_account_vendor_payment_voucher" groups="account.group_account_readonly" parent="equip3_accounting_operation.menu_vendor_payment" sequence="2"/>
    </data>
</odoo>
