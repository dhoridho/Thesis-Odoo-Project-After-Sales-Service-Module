<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="inherit_view_account_asset_asset_form" model="ir.ui.view">
        <field name="name">inherit.account.asset.asset.form</field>
        <field name="model">account.asset.asset</field>
        <field name="inherit_id" ref="om_account_asset.view_account_asset_asset_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group/group/field[@name='company_id']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//page/field[@name='depreciation_line_ids']/tree/field[@name='depreciation_date']" position="after">
                <field name="currency_id" invisible='1'/>
            </xpath>
            <xpath expr="//page/field[@name='depreciation_line_ids']/tree/field[@name='amount']" position="attributes">
                <attribute name="widget">monetary</attribute>
            </xpath>
            <xpath expr="//page/field[@name='depreciation_line_ids']/tree/field[@name='depreciated_value']" position="attributes">
                <attribute name="widget">monetary</attribute>
            </xpath>
            <xpath expr="//page/field[@name='depreciation_line_ids']/tree/field[@name='remaining_value']" position="attributes">
                <attribute name="widget">monetary</attribute>
            </xpath>
        </field>
    </record>

    <template id="assets_backend" name="mail assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/equip3_accounting_operation/static/src/components/thread_needaction_preview/thread_needaction_preview.js"></script>
        </xpath>
        <xpath expr="//script[@src='/account/static/src/js/account_selection.js']" position="replace">
            <script type="text/javascript" src="/equip3_accounting_operation/static/src/js/account_selection.js"></script>
        </xpath>
    </template>
</odoo>