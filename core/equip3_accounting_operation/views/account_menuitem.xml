<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account.menu_finance_receivables" model="ir.ui.menu">
            <field name="equip_icon_class">o-hm-sidebar-parent-accounting-customer</field> 
        </record>

        <record id="account.menu_finance_payables" model="ir.ui.menu">
            <field name="equip_icon_class">o-hm-sidebar-parent-accounting-vendors</field> 
        </record>
        
        <record id="account.menu_finance_entries" model="ir.ui.menu">
            <field name="equip_icon_class">o-hm-sidebar-sub-accounting-accounting</field> 
        </record>

        <record id="account.menu_action_move_in_refund_type" model="ir.ui.menu">
            <field name="name">Debit Notes</field>
        </record>
        

        <menuitem id="account.menu_finance" 
                  name="Accounting"
                  web_icon="account,static/description/icon.png"
                  groups="account.group_account_user,account.group_account_manager,equip3_accounting_accessright_setting.group_accountant_staff,account.group_account_invoice"/>

        <menuitem id="menu_customer_receipt" name="Customer Receipt" groups="account.group_account_readonly" sequence="9" parent="account.menu_finance_receivables"/>
        <menuitem id="menu_vendor_payment" name="Vendor Payment" groups="account.group_account_readonly" sequence="3" parent="account.menu_finance_payables"/>


        <record id="account.menu_finance_reports" model="ir.ui.menu">
            <field name="groups_id" eval="[(6, 0, [])]"/>
        </record>

        <menuitem
            id="aos_account_voucher.voucher_receipt_entries_menu"
            action="aos_account_voucher.action_receipt_voucher_list_aos_voucher"
            name="Other Income"
            parent="equip3_accounting_operation.menu_customer_receipt"
            groups="account.group_account_readonly,aos_account_voucher.group_accounting_account_voucher"
            sequence="1"/>

        <record id="aos_account_voucher.voucher_receipt_entries_menu" model="ir.ui.menu">
            <field name="groups_id" eval="[(6, 0, [])]"/>
        </record>

        <record id="aos_account_voucher.action_receipt_voucher_list_aos_voucher" model="ir.actions.act_window">
            <field name="name">Other Income</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.voucher</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="view_id" ref="aos_account_voucher.view_voucher_tree"/>
            <field name="search_view_id" ref="aos_account_voucher.view_voucher_filter"/>
            <field name="context">{'default_pay_now': 'pay_now', 'default_voucher_type': 'sale'}</field>
            <field name="domain">[('pay_now','=','pay_now'),('voucher_type','=','sale')]</field>
            <field name="search_view_id" eval="False"/> <!-- Force empty -->
            <field name="view_id" eval="False"/> <!-- Force empty -->
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to define a voucher entries.
              </p>
            </field>
        </record>


        <menuitem
            id="aos_account_voucher.voucher_entries_menu"
            name="Other Expense"
            action="aos_account_voucher.action_review_voucher_list_aos_voucher"
            groups="account.group_account_readonly,aos_account_voucher.group_accounting_account_voucher"
            parent="equip3_accounting_operation.menu_vendor_payment"
            sequence="1"/>

        <record id="aos_account_voucher.voucher_entries_menu" model="ir.ui.menu">
            <field name="groups_id" eval="[(6, 0, [])]"/>
        </record>
            
        <record id="aos_account_voucher.action_review_voucher_list_aos_voucher" model="ir.actions.act_window">
            <field name="name">Other Expense</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.voucher</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="view_id" ref="aos_account_voucher.view_voucher_tree_purchase"/>
            <field name="search_view_id" ref="aos_account_voucher.view_voucher_filter"/>
            <field name="context">{'default_pay_now': 'pay_now', 'default_voucher_type': 'purchase'}</field>
            <field name="domain">[('pay_now','=','pay_now'),('voucher_type','=','purchase')]</field>
            <field name="search_view_id" eval="False"/> <!-- Force empty -->
            <field name="view_id" eval="False"/> <!-- Force empty -->
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to define a voucher entries.
              </p>
            </field>
        </record>

        <menuitem
            id="account.menu_action_account_payments_payable"
            action="account.action_account_payments_payable"
            name="Payments"
            groups="account.group_account_readonly"
            parent="equip3_accounting_operation.menu_vendor_payment"
            sequence="5"/>
        <record id="account.action_account_payments_payable" model="ir.actions.act_window">
            <field name="name">Payments</field>
            <field name="res_model">account.payment</field>
            <field name="view_mode">tree,kanban,form,graph</field>
            <field name="context">{
                'default_payment_type': 'outbound',
                'default_partner_type': 'supplier',
                'default_move_journal_types': ('bank', 'cash'),
            }</field>
            <field name="view_id" ref="account.view_account_supplier_payment_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                  Register a payment
                </p><p>
                  Payments are used to register liquidity movements. You can process those payments by your own means or by using installed facilities.
                </p>
            </field>
        </record>

        <menuitem
            id="account.menu_action_account_payments_receivable"
            action="account.action_account_payments"
            name="Receipts"
            groups="account.group_account_readonly"
            parent="equip3_accounting_operation.menu_customer_receipt"
            sequence="4"/>
        <record id="account.action_account_payments" model="ir.actions.act_window">
            <field name="name">Receipts</field>
            <field name="res_model">account.payment</field>
            <field name="view_mode">tree,kanban,form,graph</field>
            <field name="context">{
                'default_payment_type': 'inbound',
                'default_partner_type': 'customer',
                'default_move_journal_types': ('bank', 'cash'),
            }</field>
            <field name="view_id" ref="account.view_account_payment_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                  Register a receipt
                </p><p>
                  Receipts are used to register liquidity movements. You can process those payments by your own means or by using installed facilities.
                </p>
            </field>
        </record>
        #change dashboard priority
        <menuitem id="account.menu_board_journal_1" name="Journal Overview" action="account.open_account_journal_dashboard_kanban" groups="base.group_system" sequence="2" parent="account.menu_finance"/>
    </data>
</odoo>
