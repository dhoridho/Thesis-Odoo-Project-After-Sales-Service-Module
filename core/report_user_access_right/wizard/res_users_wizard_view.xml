<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!--Form-->
    <record id="view_form_res_users_access_wizard" model="ir.ui.view">
        <field name="name">res.users.access.report.wizard.view.form</field>
        <field name="model">res.users.access.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group string="Columns">
                            <field name="group_ids" nolabel="1" widget="many2many_checkboxes"/>
                        </group>
                        <group string="Sort / Filter">
                            <field name="sort_type" widget="radio"/>
                            <field name="sort_type_mode" widget="radio" options="{'horizontal': true}"/>
                            <field name="user_tag_ids" widget="many2many_tags"/>
                            <field name="show_archived" string="Show Inactive"/>
                            <field name="show_login" string="Show Login Email ?"/>
                            <field name="show_group_category" string="Show Group Category ?"/>
                        </group>
                    </group>
                    <footer>
                        <button string="View" name="action_open_report" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!--Action-->
    <record id="action_view_res_users_access_wizard" model="ir.actions.act_window">
        <field name="name">Access Rights Report</field>
        <field name="res_model">res.users.access.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="target">new</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click here to create a record.
            </p>
        </field>
    </record>

    <!--Menu-->
    <menuitem name="Access Rights Report" id="menu_view_res_users_access_wizard" parent="base.menu_users" action="action_view_res_users_access_wizard" sequence="100" groups="base.group_no_one"/>

</odoo>