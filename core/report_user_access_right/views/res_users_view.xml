<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="res_users_view_form" model="ir.ui.view">
        <field name="name">res.users.form.inherit.user.tag</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='access_rights']/group[1]" position="before">
                <group>
                    <group>
                        <field name="user_tag_id" options="{'no_open': True}"/>
                    </group>
                    <group/>
                </group>
            </xpath>

        </field>
    </record>

    <!--Action-->
    <record id="action_view_res_users_tag" model="ir.actions.act_window">
        <field name="name">User Tags</field>
        <field name="res_model">res.users.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click here to create a user tag.
            </p>
        </field>
    </record>

    <!--Menu-->
    <menuitem name="User Tags" id="menu_view_res_users_tag" parent="base.menu_users" action="action_view_res_users_tag" sequence="110" groups="base.group_no_one"/>


</odoo>