<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_stock_scrap_request_report" model="ir.ui.view">
        <field name="name">inherit.stock.scrap.request.report</field>
        <field name="model">stock.scrap.request</field>
        <field name="inherit_id" ref="equip3_inventory_control.stock_scrap_request_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='scrap_reject']" position="after">
                <button name="action_print" string="Print" type="object" class="btn btn-primary" states="validated"/>
            </xpath>
        </field>
    </record>

</odoo>
