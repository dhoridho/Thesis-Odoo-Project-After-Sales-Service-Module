<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_tree_stock_move_inherit" model="ir.ui.view">
        <field name="name">stock.move.tree</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_uom']" position="after">
                <field name="cost" />
            </xpath>
            <xpath expr="//tree/field[@name='state']" position="replace">
                <field name="state" optional="show" widget="badge"
                    decoration-success2="state == 'done'"
                    decoration-primary="state == 'draft'"
                    decoration-success="state == 'assigned'"
                    decoration-warning3="state == 'waiting'"
                    decoration-success3="state in ('partially_available','approved')"
                    decoration-danger3="state == 'cancel'"
                    decoration-danger="state == 'rejected'"
                    decoration-warning="state == 'confirmed'" />
            </xpath>
        </field>
    </record>

    <record id="view_form_stock_move_inherit" model="ir.ui.view">
        <field name="name">stock.move.form</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='weight']" position="after">
                <field name="volume" />

                <field name="movement_type" invisible="1" />
            </xpath>
        </field>
    </record>

    <record id="returned_product_request_view_tree" model="ir.ui.view">
        <field name="name">returned.product.request.view.tree</field>
        <field name="model">stock.move</field>
        <field name="arch" type="xml">
            <tree create="0">
                <field name="product_id" />
                <field name="name" />
                <field name="product_uom_qty" string="Quantity" />
                <field name="product_uom" />
                <field name="reference" />
                <field name="origin" />
                <field name="date" string="Scheduled date" />
                <field name="date_done" string="Done date" />
                <field name="state" optional="show" widget="badge"
                    decoration-success2="state == 'done'"
                    decoration-primary="state == 'draft'"
                    decoration-success="state == 'assigned'"
                    decoration-warning3="state == 'waiting'"
                    decoration-success3="state in ('partially_available','approved')"
                    decoration-danger3="state == 'cancel'"
                    decoration-danger="state == 'rejected'"
                    decoration-warning="state == 'confirmed'" />
                <field name="return_reason" />
                <field name="action" />
            </tree>
        </field>
    </record>

    <record id="returned_product_request_view_pivot" model="ir.ui.view">
        <field name="name">returned.product.request.view.pivot</field>
        <field name="model">stock.move</field>
        <field name="arch" type="xml">
            <pivot sample="1">
                <field name="write_date" interval="month" type="col" />
                <field name="return_reason" type="col" />
                <field name="company_id" type="row" />
                <field name="product_id" type="row" />
                <field name="location_dest_id" groups="stock.group_stock_multi_locations" type="row" />
                <field name="product_uom_qty" string="Quantity" type="measure" />
            </pivot>
        </field>
    </record>

    <record id="operation_analysis_view_pivot" model="ir.ui.view">
        <field name="name">operation.analysis.view.pivot</field>
        <field name="model">stock.move</field>
        <field name="priority" eval="100" />
        <field name="arch" type="xml">
            <pivot sample="1">
                <field name="warehouse_id" type="row" />
                <field name="picking_id" type="row" string="Reference" />
                <field name="date" type="col" />
                <field name="initial_demand" type="measure" />
                <field name="quantity_done" type="measure" />
                <field name="process_time_hours" type="measure" />
            </pivot>
        </field>
    </record>

    <record id="operation_analysis_view_tree" model="ir.ui.view">
        <field name="name">operation.analysis.view.tree</field>
        <field name="model">stock.move</field>
        <field name="priority" eval="100" />
        <field name="arch" type="xml">
            <tree create="0">
                <field name="location_id" />
                <field name="reference" />
                <field name="product_id" />
                <field name="product_uom_qty" string="Quantity" />
                <field name="product_uom" />
                <field name="initial_demand" />
                <field name="quantity_done" />
                <field name="process_time" />
                <field name="late_time" />
                <field name="company_id" />
                <field name="state" invisible="1" />
            </tree>
        </field>
    </record>

    <record id="operation_analysis_search_view" model="ir.ui.view">
        <field name="name">stock.operation.analysis.search.view</field>
        <field name="model">stock.move</field>
        <field name="priority" eval="100" />
        <field name="arch" type="xml">
            <search string="operation Anaylisis">
                <field name="picking_type_code" />
                <field name="location_id" />
                <field name="location_dest_id" />
                <field name="partner_id" />
                <field name="responsible" />
                <field name="state" />
                <field name="process_status" />
                <separator />
                <filter string="Delivery Orders" name="picking_type_code_outgoing"
                    domain="[('picking_type_code', '=', 'outgoing')]" />
                <filter string="Receiving Notes" name="picking_type_code_incoming"
                    domain="[('picking_type_code', '=', 'incoming')]" />
                <filter string="Internal Transfer" name="picking_type_code_internal"
                    domain="[('picking_type_code', '=', 'internal')]" />
                <group expand="0" string="Group By">
                    <separator />
                    <filter string="Picking Type " name="picking_type_code"
                        context="{'group_by': 'picking_type_code'}" />
                    <separator />
                    <filter string="Source Location" name="location_id"
                        context="{'group_by': 'location_id'}" />
                    <separator />
                    <filter string="Destination Location" name="location_dest_id"
                        context="{'group_by': 'location_dest_id'}" />
                    <separator />
                    <filter string="Partner" name="partner_id" context="{'group_by': 'partner_id'}" />
                    <separator />
                    <filter string="Responsible" name="responsible"
                        context="{'group_by': 'responsible'}" />
                    <separator />
                    <filter string="Status" name="state" context="{'group_by': 'state'}" />
                    <separator />
                    <filter string="Processed Status" name="process_status"
                        context="{'group_by': 'process_status'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="stock_move_line_tree_inherit" model="ir.ui.view">
        <field name="name">stock.move.line.tree.inherit</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='state']" position="replace">
                <field name="state" optional="show" widget="badge"
                    decoration-success2="state == 'done'"
                    decoration-secondary="state == 'draft'"
                    decoration-success="state == 'assigned'"
                    decoration-warning="state == 'waiting'"
                    decoration-warning3="state =='waiting_for_approval'"
                    decoration-danger3="state == 'cancel'"
                    decoration-danger="state == 'rejected'"
                    decoration-success3="state == 'approved'"
                    decoration-warning2="state == 'confirmed'" />
            </xpath>
        </field>
    </record>

    <record id="stock_move_line_view_search" model="ir.ui.view">
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.stock_move_line_view_search" />
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='done']" position="after">
                <filter name="is_low_stock" string="Low Stock Limit"
                    domain="[('is_low_stock', '=', True)]" />
            </xpath>
        </field>
    </record>


    <record id="action_return_product_request" model="ir.actions.act_window">
        <field name="name">Returned Product</field>
        <field name="res_model">stock.move</field>
        <field name="view_mode">pivot,tree</field>
        <field name="domain">[('origin_returned_move_id', '!=', False), ('state', '=', 'done')]</field>
        <field name="context">{'tree_view_ref':
            'equip3_inventory_reports.returned_product_request_view_tree',
            'pivot_view_ref': 'equip3_inventory_reports.returned_product_request_view_pivot',
            'search_default_by_product': 1}</field>
    </record>

    <record id="view_move_form_inventory_transit_inherit" model="ir.ui.view">
        <field name="name">Inventory in Transit Form View</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="origin_src_location"
                    attrs="{'invisible': [('origin_src_location', '=', False)]}" />
                <field name="origin_dest_location"
                    attrs="{'invisible': [('origin_dest_location', '=', False)]}" />
                <field name="is_transit" invisible="1" />
                <field name="is_transfer_in" invisible="1" />
                <field name="is_transfer_out" invisible="1" />
            </xpath>
        </field>
    </record>

    <record id="view_move_inventory_transit_tree" model="ir.ui.view">
        <field name="name">stock.move.tree</field>
        <field name="model">stock.move</field>
        <field name="arch" type="xml">
            <tree string="Moves" create="0">
                <field name="origin" string="Internal Transfer Reference" />
                <field name="picking_reference" string="Inventory Operation Reference" />
                <field name="origin_src_location" />
                <field name="location_dest_id" />
                <field name="branch_id" string="Branch" />
                <field name="product_id" />
                <field name="product_uom_qty" />
                <field name="product_uom" options="{'no_open': True, 'no_create': True}"
                    string="Unit of Measure" groups="uom.group_uom" />
                <field name="date" string="Scheduled Date" />
                <field name="state" widget="badge" decoration-success="state == 'done'"
                    decoration-info="state not in ('done', 'cancel')" invisible="1" />
            </tree>
        </field>
    </record>

    <record id="view_move_inventory_transit_search_inherit" model="ir.ui.view">
        <field name="name">View Move Search Inherit</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_search" />
        <field name="arch" type="xml">
            <filter name="done" position="replace">
                <filter string="In Transit" name="is_transit_id"
                    domain="['&amp;',('is_transit','=', True),'&amp;',('is_transfer_out','=',True),('state','!=', 'done')]" />
            </filter>
        </field>
    </record>

    <record id="action_inventory_transit_stock_move" model="ir.actions.act_window">
        <field name="name">Inventory In Transit</field>
        <field name="res_model">stock.move</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_move_inventory_transit_tree" />
        <field name="domain">[('is_transit','=',True)]</field>
        <field name="context">{
            'search_default_is_transit_id' : 1
            }</field>
    </record>


    <record id="action_operation_analysis_inventory" model="ir.actions.act_window">
        <field name="name">Operation Anaylisis</field>
        <field name="res_model">stock.move</field>
        <field name="view_mode">pivot,tree</field>
        <field name="context">{'search_default_picking_type_code_outgoing': 1}</field>
        <field name="search_view_id" ref="operation_analysis_search_view" />
        <field name="domain">[('picking_id', '!=', False), ('state', '=', 'done')]</field>
    </record>


    <record model="ir.actions.act_window.view" id="operation_analysis_action_tree">
        <field name="sequence" eval="2" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="operation_analysis_view_tree" />
        <field name="act_window_id" ref="action_operation_analysis_inventory" />
    </record>

    <record model="ir.actions.act_window.view" id="operation_analysis_action_pivot">
        <field name="sequence" eval="1" />
        <field name="view_mode">pivot</field>
        <field name="view_id" ref="operation_analysis_view_pivot" />
        <field name="act_window_id" ref="action_operation_analysis_inventory" />
    </record>

    <record id="view_move_form_reserved_stock_inherit" model="ir.ui.view">
        <field name="name">Stock Reservation Form View</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='origin_grp']" position="after">
                <group name="reserved_quants" string="Reserved Quants"
                    attrs="{'invisible': [('is_reserved','=',False)]}">
                    <field name="reserved_availability"
                        attrs="{'invisible': [('is_reserved','=',False)]}" />
                    <field name="reserved_by_id" attrs="{'invisible': [('is_reserved','=',False)]}" />
                    <field name="is_reserved" invisible="1" />
                </group>
            </xpath>
            <xpath expr="//button[@name='action_get_account_moves']" position="attributes">
                <attribute name="icon">o-hm-smart-all-bills</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_move_reserved_tree" model="ir.ui.view">
        <field name="name">stock.move.tree</field>
        <field name="model">stock.move</field>
        <field eval="8" name="priority" />
        <field name="arch" type="xml">
            <tree string="Moves" create="0">
                <field name="reference" />
                <field name="origin" />
                <field name="product_id" />
                <field name="name" />
                <field name="product_uom" options="{'no_open': True, 'no_create': True}"
                    string="Unit of Measure" groups="uom.group_uom" />
                <field name="product_uom_qty" />
                <field name="reserved_availability" />
                <field name="location_id" options="{'no_create': True}" string="From" />
                <field name="location_dest_id" options="{'no_create': True}" string="To" />
                <field name="branch_id" string="Branch" />
                <field name="date" string="Scheduled Date" groups="base.group_no_one"
                    decoration-danger="(state not in ('cancel','done')) and date &gt; current_date" />
                <!-- <field name="reserved_by_id" /> -->
                <field name="state" optional="show" widget="badge"
                    decoration-success2="state == 'done'"
                    decoration-primary="state == 'draft'"
                    decoration-success="state == 'assigned'"
                    decoration-warning3="state == 'waiting'"
                    decoration-success3="state in ('partially_available','approved')"
                    decoration-danger3="state == 'cancel'"
                    decoration-danger="state == 'rejected'"
                    decoration-warning="state == 'confirmed'" />
            </tree>
        </field>
    </record>

    <record id="view_move_search_inherit" model="ir.ui.view">
        <field name="name">View Move Search Inherit</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_search" />
        <field name="arch" type="xml">
            <filter name="ready" position="replace">
                <filter string="Status is 'Available' or 'Partially Available'" name="ready"
                    domain="[('state','in',['assigned','partially_available'])]"
                    help="Stock moves that are Available and Partially Available" />
            </filter>
        </field>
    </record>

    <record id="action_stock_reserved_stocks" model="ir.actions.act_window">
        <field name="name">Stock Reservation</field>
        <field name="res_model">stock.move</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_move_reserved_tree" />
        <field name="domain">['&amp;', ('picking_type_code','!=','incoming'),
            ('state','=','assigned')]</field>
        <field name="context">{
            'search_default_ready' : 1
            }</field>
    </record>


