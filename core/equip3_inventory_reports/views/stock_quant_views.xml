    <record id="quant_search_view" model="ir.ui.view">
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.quant_search_view" />
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='on_hand']" position="after">
                <filter name="is_low_stock" string="Low Stock Limit"
                    domain="[('is_low_stock', '=', True)]" />
            </xpath>
            <xpath expr="//filter[@name='company']" position="after">
                <filter name="warehouse_id" string="Warehouse"
                    context="{'group_by': 'warehouse_id'}" />
                <filter name="cluster_area_id" string="Cluster Area"
                    context="{'group_by': 'cluster_area_id'}" />
            </xpath>
        </field>
    </record>

    <!-- expiring_and_expired_stocks_view -->
    <record id="view_tree_expiring_stocks" model="ir.ui.view">
        <field name="name">expiring.and.expired.stock.tree.view</field>
        <field name="model">stock.quant</field>
        <field name="arch" type="xml">
            <tree string="Expiring &amp; Expired Stocks" create="false" edit="false" delete="false">
                <field name="product_id" />
                <field name="lot_id" />
                <field name="location_id" />
                <field name="warehouse_id" />
                <field name="expire_date" string="Expiry Date" />
                <field name="expire_days" decoration-danger="expire_days_count &lt; 0"
                    decoration-success="expire_days_count &gt; 0"
                    decoration-warning="expire_days_count == 0" class="expire_days" />
                <field name="expire_days_count" invisible="1" />
            </tree>
        </field>
    </record>

    <record id="action_expiring_stocks" model="ir.actions.act_window">
        <field name="name">Expiring &amp; Expired Stocks</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.quant</field>
        <field name="view_mode">tree</field>
        <field name="domain">[('lot_id', '!=', False), ('expire_date', '!=', False),
            ('location_id.usage', '=', 'internal')]</field>
        <field name="search_view_id" ref="stock.quant_search_view" />
        <field name="context">{'search_default_productgroup':1, 'search_default_locationgroup':1}</field>
        <field name="help" type="html">
            <p class="oe_views_nocontent_create">
                Click to add a new test object.
            </p>
        </field>
    </record>

    <record model="ir.actions.act_window.view" id="stocks_expired_action_tree">
        <field name="sequence" eval="1" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_tree_expiring_stocks" />
        <field name="act_window_id" ref="equip3_inventory_reports.action_expiring_stocks" />
    </record>

</odoo>
