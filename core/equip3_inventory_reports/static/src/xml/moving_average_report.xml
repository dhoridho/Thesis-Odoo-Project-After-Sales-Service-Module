<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="MovingAverageReportFilter">
        <div class="o_cp_bottom_bottom">
            <table>
                <tbody>
                    <tr>
                        <td class="o_td_label">Period</td>
                        <td><input type="date" class="o_input o_date_from o_report_filter" t-att-value="defaultDateFrom"/></td>
                        <td class="o_td_label">to</td>
                        <td><input type="date" class="o_input o_date_to o_report_filter" t-att-value="defaultDateTo"/></td>
                    </tr>
                    <tr>
                        <td class="o_td_label">Warehouse</td>
                        <td colspan="3">
                            <select class="o_input o_warehouse o_report_filter">
                                <option value="0"></option>
                                <t t-foreach="warehouseIds" t-as="warehouse">
                                    <option t-att-value="warehouse.id"><t t-esc="warehouse.display_name"/></option>
                                </t>
                            </select>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </t>
</templates>