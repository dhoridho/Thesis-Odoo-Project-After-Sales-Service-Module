<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- moving.average cron -->
        <record id="moving_average_ir_cron" forcecreate="True" model="ir.cron">
            <field name="name">Moving Average</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="model_moving_average"/>
            <field name="state">code</field>
            <field name="code">model._get_quant()</field>
            <field name="priority" eval="5" />
            <field name="nextcall" eval="datetime.now() + (datetime.now(pytz.timezone('Asia/Jakarta')).replace(hour=23, minute=00, second=00) - datetime.now(pytz.timezone('Asia/Jakarta'))) % timedelta(hours=24)"/>
        </record>
    </data>
</odoo>