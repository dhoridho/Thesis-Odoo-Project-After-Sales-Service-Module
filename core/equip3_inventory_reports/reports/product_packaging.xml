<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="company_details">
        <span style="text-transform:capitalize; padding:0px; margin:0; color: #51565b;">
            <t t-if="company.partner_id">
                <strong>
                    <span t-field="company.partner_id"/>
                    <br/>
                    <span t-field="company.street"/>
                    <br/>
                    <span t-field="company.city_id"/>
                    <span t-field="company.state_id"/>
                    <span t-field="company.zip"/>
                    <span t-field="company.country_id"/>
                </strong>
            </t>
        </span>
    </template>
    
    <template id="company_emails">
        <span style="text-transform:capitalize; padding:0px; margin:0; color: #51565b;">
            <t t-if="company.partner_id">
                <strong>
                    <span t-field="company.email"/>
                </strong>
            </t>
        </span>
    </template>
    
    <template id="company_id">
        <span>
            <t t-if="company">
                <span t-field="company"/>
            </t>
        </span>
    </template>
    
    <template id="product_packaging_template_header">
        <div class="header">
            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                <tbody>
                    <tr>
                        <td>
                            <center>
                                <table border="0" cellpadding="0" cellspacing="0" style="padding:20px 20px 0px 20px; margin:0; background:#fff; line-height:20px; vertical-align:middle; float:none;" width="100%">
                                    <tr>
                                        <td align="left" colspan="2" t-attf-style="vertical-align:middle; float:none; color:#{text_color or '#ffffff'}; padding:0 0px;" valign="top">
                                            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                <tr>
                                                    <td align="left" style="color:#4D4D4F; padding: 20px 20px 0px 20px; border-right: 1px solid #D4D1D1; width:10%; vertical-align:top; float:none;" valign="top">
                                                        <img style="max-height:50px; vertical-align: top; float:none;" t-att-src="'data:image/png;base64,%s'% to_text(company.logo)" t-if="company.logo"/>
                                                        <br/>
                                                    </td>
                                                    <td style="padding: 20px 20px 0px 20px; width:30%" valign="top">
                                                        <p t-attf-style="text-transform:capitalize; color: #000000; font-weight:bold;margin:0; margin-bottom:5px;">Address</p>
                                                        <t t-call="equip3_inventory_reports.company_details"/>
                                                        <br/>
                                                        <span style="text-transform:capitalize; color: #000000; font-weight:bold;margin:0; margin-bottom:5px;">Email:</span>
                                                        <t t-call="equip3_inventory_reports.company_emails"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </center>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </template>
    
    
    <template id="product_packaging_template_external_layout">
        <!-- Multicompany -->
        <t t-if="o.company_id">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o.company_id">
            <t t-set="company" t-value="res_company"/>
        </t>
        <t t-call="equip3_inventory_reports.product_packaging_template_header"/>
        <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
            <t t-raw="0"/>
        </div>
    </template>
    
    <template id="report_product_packaging_views">
        <t t-call="equip3_inventory_reports.product_packaging_template_external_layout">
        <t t-set="theme_color" t-value="company and company.theme_color"/>
        <t t-set="theme_text_color" t-value="company and company.theme_text_color"/>
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
            <div class="page">
                <div class="oe_structure"/>
                <br/>
                <div width="100%">
                    <div  style="padding:0px 20px 20px 20px; margin:0; background:#fff; line-height:20px;" width="100%">
                        <div align="left"  style="color:#4D4D4F; padding: 0px 0px 15px 0px;" valign="top">
                            <table border="0" cellpadding="0" cellspacing="0" t-attf-style="color:#fff; text-transform:capitalize; border: 1px solid #{theme_color or '#000000'};" width="100%">
                                <tr t-attf-style="background-color: #3f3f3f;">
                                    <td t-attf-style="padding:5px 15px; color: #{theme_color or '#ffffff'};">
                                        <span style="font-weight:bold;">Packaging Name</span>
                                        <br/>
                                        <span t-field="o.name"/>
                                    </td>
                                    <td t-attf-style="padding:5px 15px; color: #{theme_color or '#ffffff'};">
                                        <span style="font-weight:bold;">Max Height</span>
                                        <br/>
                                        <span t-field="o.maximum_height"/>
                                    </td>
                                    <td t-attf-style="padding:5px 15px; color: #{theme_color or '#ffffff'};">
                                        <span style="font-weight:bold;">Max Width:</span>
                                        <br/>
                                        <span t-field="o.maximum_width"/>
                                    </td>
                                    <td t-attf-style="padding:5px 15px; color: #{theme_color or '#ffffff'};">
                                        <span style="font-weight:bold;">Company:</span>
                                        <br/>
                                        <span t-esc="company.name"/>
                                    </td>
                                    <td t-attf-style="padding:5px 15px; color: #{theme_color or '#ffffff'};">
                                        <span style="font-weight:bold;">Barcode:</span>
                                        <br/>
                                        <span t-field="o.barcode"/>
                                    </td>
                                </tr>
                                <tr t-attf-style="background-color: #3f3f3f;">
                                    <td t-attf-style="padding:5px 15px; font-weight:bold; color: #{theme_color or '#ffffff'};">
                                    </td>
                                    <td t-attf-style="padding:5px 15px; color: #{theme_color or '#ffffff'};">
                                        <span style="font-weight:bold;">Max Length</span>
                                        <br/>
                                        <span t-field="o.maximum_length"/>
                                    </td>
                                    <td t-attf-style="padding:5px 15px; color: #{theme_color or '#ffffff'};">
                                        <span style="font-weight:bold;">Max Volume</span>
                                        <br/>
                                        <span t-field="o.maximum_volume"/>
                                    </td>
                                    <td t-attf-style="padding:5px 15px; color: #{theme_color or '#ffffff'};">
                                        <span style="font-weight:bold;">Package Measure By</span>
                                        <br/>
                                        <t t-foreach="o.measure_ids" t-as="m">
                                            <span t-field="m.measure"></span>
                                        </t>
                                    </td>
                                    <td t-attf-style="padding:5px 15px; color: #{theme_color or '#ffffff'};">
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <table border="0" cellpadding="0" cellspacing="0" t-attf-style="color:#fff; text-transform:capitalize; border: 1px solid #{theme_color or '#000000'};" width="100%">
                            <tr t-attf-style="background-color: #3f3f3f;">
                                <td style="padding:5px 15px; font-weight:bold; color: #{theme_color or '#ffffff'};" width="5%">
                                    <span>No.</span>
                                </td>
                                <td style="padding:5px 15px; font-weight:bold; color: #{theme_color or '#ffffff'};" width="95%">
                                    <span>Product</span>
                                </td>
                            </tr>
                            <t t-set="number" t-value="1"/>
                            <tr t-foreach="o.product_id" t-as="prod">
                                <td style="padding-left:20px;padding-top:10px;padding-bottom:5px; color: #000000; border:1px solid #D3D3D3;" width="5%">
                                    <span t-esc="number"/>
                                </td>
                                <td style="padding-left:20px;padding-top:10px;padding-bottom:5px; color: #000000; border:1px solid #D3D3D3;" width="95%">
                                    [<span t-field="prod.default_code"/>]
                                    <span t-field="prod.product_tmpl_id.name"/>
                                </td>
                                <t t-set="number" t-value="number + 1"/>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="oe_structure"/>
            </div>
        </t>
    </template>
    
    <template id="report_product_packaging_new">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="equip3_inventory_reports.report_product_packaging_views"/>
            </t>
        </t>
    </template>
    
    <report 
        id="report_product_packaging_menu"
        string="Product Packaging"
        model="product.packaging"
        report_type="qweb-pdf"
        name="equip3_inventory_reports.report_product_packaging_new"
        file="equip3_inventory_reports.report_product_packaging_new"
        print_report_name="('Product Packging - %s' % (object.name))"/>
            
    <record id="product.report_product_packaging" model="ir.actions.report">
        <field name="binding_model_id" eval="False"/>
    </record>
    
    <record id="stock.label_product_packaging" model="ir.actions.report">
        <field name="binding_model_id" eval="False"/>
    </record>

</odoo>
