<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- moving.average search view -->
        <record id="moving_average_view_search" model="ir.ui.view">
            <field name="name">moving.average.view.search</field>
            <field name="model">moving.average</field>
            <field name="arch" type="xml">
                <search string="Moving Average">
                    <field name="product_id"/>
                    <field name="warehouse_id"/>
                </search>
            </field>
        </record>

        <!-- moving_average_pivot tree view -->
        <record id="moving_average_pivot_view_tree" model="ir.ui.view">
            <field name="name">moving_average_pivot.view.tree</field>
            <field name="model">moving.average</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="warehouse_id"/>
                    <field name="product_id"/>
                    <field name="date"/>
                    <field name="average_cost"/>
                    <field name="uom_id"/>
                </tree>
            </field>
        </record>

        <record id="moving_average_view_pivot" model="ir.ui.view">
            <field name="name">moving.average.view.pivot</field>
            <field name="model">moving.average</field>
            <field name="arch" type="xml">
                <pivot string="Pivot Description" disable_linking="True" js_class="moving_average_report_pivot">
                    <field name="date" type="col" interval="day"/>
                    <field name="product_id" type="row"/>
                    <field name="average_cost" type="measure"/>
                </pivot>
            </field>
        </record>

        <!-- moving.average graph view -->
        <record id="moving_average_view_graph" model="ir.ui.view">
            <field name="name">moving.average.view.graph</field>
            <field name="model">moving.average</field>
            <field name="arch" type="xml">
                <graph string="Moving Average">
                    <field name="product_id"/>
                    <field name="warehouse_id"/>
                    <field name="date"/>
                </graph>
            </field>
        </record>

        <!-- moving.average action window -->
        <record id="moving_average_action" model="ir.actions.act_window">
            <field name="name">Moving Average Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">moving.average</field>
            <field name="view_mode">pivot,graph,tree</field>
            <field name="search_view_id" ref="moving_average_view_search" />
        </record>

        <menuitem id="moving_average_menu_act" name="Moving Average Report" parent="stock.menu_warehouse_report" action="moving_average_action" sequence="20"/>

    </data>
</odoo>