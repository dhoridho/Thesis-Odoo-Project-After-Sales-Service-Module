<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">


    <t t-name="RetailOrderReceiptCustomTemplate" t-inherit="equip3_pos_masterdata.RetailOrderReceiptCustomTemplate" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('pos-receipt-header-custom-template')]/div[1]" position="after">
          <div style="margin-top: 10px;">
            <t t-if="receipt.is_ph_training_mode">
                <p style="margin: 0px 0px 0px 0;" class="text-center">TRAINING MODE</p>
            </t>
            <t t-else="">
                 <t t-if="receipt.is_void_order">
                    <p style="margin: 0px 0px 0px 0;" class="text-center">VOID</p>
                 </t>
                 <t t-if="receipt.is_exchange_order">
                    <p style="margin: 0px 0px 0px 0;" class="text-center">EXCHANGE</p>
                 </t>
                 <t t-if="receipt.is_return_order and !receipt.is_exchange_order">
                    <p style="margin: 0px 0px 0px 0;" class="text-center">RETURN</p>
                 </t>
                 <t t-if="!receipt.is_void_order and !receipt.is_return_order and !receipt.is_exchange_order">
                    <p style="margin: 0px 0px 0px 0;" class="text-center">SALES INVOICE</p>
                 </t>
            </t>
          </div>

            <div style="margin-top: 15px;margin-bottom: -10px;"  t-if="receipt_template.is_ph_template and receipt_template.is_ph_show_company_information">
                <p style="margin: 3px 0;" class="text-center">COMPANY NO : <span t-esc="env.pos.company.ph_company_no"/></p>
                <p style="margin: 3px 0;" class="text-center">VAT REG TIN : <span t-esc="env.pos.company.company_npwp"/></p>
                <p style="white-space: nowrap; overflow: hidden; text-overflow: unset;margin-bottom:0px;margin: 3px 0;" class="prct_line_break_s_top">--------------------------------------------------------------------------------------</p>
            </div>
            <div style="margin-top: 15px;margin-bottom: -10px;"  t-if="receipt_template.is_ph_template and receipt_template.is_ph_show_pos_information">
                <p style="margin: 3px 0;" class="text-center">
                    <t t-if="env.pos.pos_session.name">POS S/N : <span style="margin-right: 10px;" t-esc="env.pos.pos_session.name"/></t>
                    <t t-if="env.pos.config.ph_machine_identification_number">MIN : <span t-esc="env.pos.config.ph_machine_identification_number"/></t>
                </p>
                <p style="white-space: nowrap; overflow: hidden; text-overflow: unset;margin-bottom:0px;margin: 3px 0;" class="prct_line_break_s_top">--------------------------------------------------------------------------------------</p>
            </div>
        </xpath>
        <xpath expr="//div[hasclass('prct_custom_footer')]" position="before">
            <div  t-if="receipt_template.is_ph_template" >
                <p style="color:white;margin: 0px;">-</p>
            </div>
            <div  t-if="receipt_template.is_ph_template and receipt_template.is_ph_show_customer_information and receipt.client" class="text-center">
                <p style="margin: 3px 0;"><b>Name : <span t-esc="receipt.client.name"/></b></p>
                <p style="margin: 3px 0;" t-if="receipt.client.street">Address : <span t-esc="receipt.client.street"/></p>
                <p style="margin: 3px 0;" t-if="receipt.client.street2"><span t-esc="receipt.client.street2"/></p>
                <p style="margin: 3px 0;" t-if="receipt.client.l10n_id_pkp and receipt.client.vat">TIN : <span t-esc="receipt.client.vat"/></p>
            </div>
            <div  t-if="receipt_template.is_ph_template and receipt_template.is_ph_show_pos_information"  class="text-center">
                <p style="margin: 3px 0;"  t-if="env.pos.config.ph_ptu_number">PTU NO : <span t-esc="env.pos.config.ph_ptu_number"/></p>
                <p style="margin: 3px 0;" t-if="env.pos.config.ph_ptu_issued_date">Date Issued : <span t-esc="env.pos.db._format_date(env.pos.config.ph_ptu_issued_date)"/></p>
            </div>
            <div  t-if="receipt_template.is_ph_template and receipt_template.is_ph_show_company_information"  class="text-center">
                <p style="margin: 3px 0;">Hashmicro Philippines</p>
                <p style="margin: 3px 0;" >Unit 707 Avida One Park Drive 11th Drive COR 9th AVE</p>
                <p style="margin: 3px 0;" >Bonifacio Global City of Taguig Fourth District</p>
                <p style="margin: 3px 0;" t-if="env.pos.company.company_npwp">VAT REG TIN : <span t-esc="env.pos.company.company_npwp"/></p>
                <p style="margin: 3px 0;" t-if="env.pos.company.ph_bir_accreditation_no">ACCREDITATION NO : <span t-esc="env.pos.company.ph_bir_accreditation_no"/></p>
                <p style="margin: 3px 0;" t-if="env.pos.company.ph_bir_accreditation_issued_date and env.pos.company.is_ph_bir_accreditation">Accreditation Date issued : <span t-esc="env.pos.db._format_date(env.pos.company.ph_bir_accreditation_issued_date)"/></p>
                <p style="margin: 3px 0;" t-if="env.pos.company.ph_bir_accreditation_valid_until  and env.pos.company.is_ph_bir_accreditation and ! receipt.is_ph_training_mode">
                    Accreditation Valid Until : <span t-esc="env.pos.db._format_date(env.pos.company.ph_bir_accreditation_valid_until)"/>
                </p>
                <t t-if="receipt.is_ph_training_mode">
                    <p style="margin: 10px 0px 0px 0px;">
                        THIS IS NOT AN OFFICIAL INVOICE
                    </p>
                </t>
                <t t-else="">
                     <t t-if="receipt.is_return_order or receipt.is_void_order">
                        <p style="margin: 10px 0px 0px 0px;">THIS DOCUMENT IS NOT VALID FOR CLAIM OF INPUT TAX</p>
                     </t>
                     <t t-if="!receipt.is_void_order and !receipt.is_return_order and !receipt.is_exchange_order">
                         <p style="margin: 10px 0px 0px 0px;">THIS SERVES AS A SALES INVOICE</p>
                     </t>
                </t>
                
            </div>

        </xpath>

        <xpath expr="//div[@id='bottom_detail_price_left']" position="inside">
             <p   t-if="receipt_template.is_ph_vat_detail and receipt_template.is_ph_template"  style="margin: 1px 0px;">VATable :</p>
             <p   t-if="receipt_template.is_ph_vat_detail and receipt_template.is_ph_template"  style="margin: 1px 0px;">VAT exempt :</p>
             <p   t-if="receipt_template.is_ph_vat_detail and receipt_template.is_ph_template"  style="margin: 1px 0px;">VAT zero rate :</p>
        </xpath>
        <xpath expr="//div[@id='bottom_detail_price_right']" position="inside">
             <p  t-if="receipt_template.is_ph_vat_detail and receipt_template.is_ph_template" style="margin: 1px 0px;">
                <t t-esc="env.pos.format_currency(receipt.VATable,false,receipt.currency)"/>
            </p>
             <p  t-if="receipt_template.is_ph_vat_detail and receipt_template.is_ph_template" style="margin: 1px 0px;">
                <t t-esc="env.pos.format_currency(receipt.VATexempt,false,receipt.currency)"/>
            </p>
             <p  t-if="receipt_template.is_ph_vat_detail and receipt_template.is_ph_template" style="margin: 1px 0px;">
                <t t-esc="env.pos.format_currency(receipt.VATZeroRate,false,receipt.currency)"/>
            </p>
        </xpath>
            
    </t>

</templates>
