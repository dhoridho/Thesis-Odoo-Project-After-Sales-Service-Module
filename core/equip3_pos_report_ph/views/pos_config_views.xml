<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="inherit_pos_general_pos_config_retail">
            <field name="name">inherit_pos_general_pos_config_retail</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="equip3_pos_general.pos_config_retail"/>
            <field name="arch" type="xml">
                <group name="pos_custom_sale" position="after">
                    <group>
                        <field name="is_ph_training_mode"  string="Training Mode"/>
                    </group>
                </group>
            </field>
        </record>


        <record model="ir.ui.view" id="inherit_pos_config_form_view">
            <field name="name">inherit_pos_config_form_view</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <div id="pos_sale_report" position="after">
                    <h2>Philippines config</h2>
                    <div class="row mt16 o_settings_container" id='philippines_config'>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">MIN (Machine Identification Number)</span>
                                <field name="ph_machine_identification_number" nolabel="1"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box"/>
                        <div class="col-12 col-lg-6 o_setting_box">
                             <div class="o_setting_left_pane">
                                <field name="is_ph_enable_ptu_number"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Enable PTU Number</span>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box"/>
                        <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('is_ph_enable_ptu_number', '=', False)]}">
                            <div class="o_setting_left_pane"></div>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">PTU Number</span>
                                <field name="ph_ptu_number" nolabel="1"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box"/>
                        <div class="col-6 col-lg-6 o_setting_box" attrs="{'invisible': [('is_ph_enable_ptu_number', '=', False)]}">
                            <div class="o_setting_left_pane"></div>
                            <div class="o_setting_right_pane">
                                <label for="ph_ptu_issued_date" string="Issued Date"/>
                                <field name="ph_ptu_issued_date" attrs="{'required': [('is_ph_enable_ptu_number', '=', True)]}"/>
                            </div>
                        </div>
                        <div class="col-6 col-lg-6 o_setting_box" attrs="{'invisible': [('is_ph_enable_ptu_number', '=', False)]}">
                            <div class="o_setting_left_pane"></div>
                            <div class="o_setting_right_pane">
                                <label for="ph_ptu_valid_date" string="Valid Date"/>
                                <field name="ph_ptu_valid_date" attrs="{'required': [('is_ph_enable_ptu_number', '=', True)]}"/>
                            </div>
                        </div>
                    </div>
                </div>
            </field>
        </record>

    </data>
</odoo>
