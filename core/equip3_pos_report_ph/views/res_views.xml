<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="inherit_res_company_form_view">
            <field name="name">inherit_res_company_form_view</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <group name="social_media" position="after">
                     <group name="philippines_config" string="Philippines Template">
                        <field name="ph_company_no" string="Company Number"/>
                        <field name="is_ph_bir_accreditation" string="BIR Accreditation ?"/>
                        <field name="ph_bir_accreditation_no" string="Accreditation Number" attrs="{'invisible': [('is_ph_bir_accreditation', '=', False)]}"/>
                        <field name="ph_bir_accreditation_issued_date" string="Accreditation Issued Date" attrs="{'required': [('is_ph_bir_accreditation', '=', True)],'invisible': [('is_ph_bir_accreditation', '=', False)]}"/>
                        <field name="ph_bir_accreditation_valid_until" string="Accreditation Valid Until" attrs="{'required': [('is_ph_bir_accreditation', '=', True)],'invisible': [('is_ph_bir_accreditation', '=', False)]}"/>
                     </group>
                </group>
            </field>
        </record>

    </data>
</odoo>
