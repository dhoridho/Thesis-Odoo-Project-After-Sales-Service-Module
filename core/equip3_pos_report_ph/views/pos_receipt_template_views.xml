<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="inherit_pos_receipt_template_form_view">
            <field name="name">inherit_pos_receipt_template_form_view</field>
            <field name="model">pos.receipt.template</field>
            <field name="inherit_id" ref="equip3_pos_masterdata.view_pos_receipt_template_form"/>
            <field name="arch" type="xml">
                <group name="form_core" position="after">
                     <group name="philippines_config" string="Philippines Template">
                        <field name="is_ph_template" nolabel="1"/>
                        <field name="is_ph_show_customer_information" string="Show Customer Information" attrs="{'invisible': [('is_ph_template', '=', False)]}"/>
                        <field name="is_ph_show_pos_information" string="Show POS Information" attrs="{'invisible': [('is_ph_template', '=', False)]}"/>
                        <field name="is_ph_show_company_information" string="Show Company Information" attrs="{'invisible': [('is_ph_template', '=', False)]}"/>
                        <field name="is_ph_vat_detail"  string="VAT Detail" attrs="{'invisible': [('is_ph_template', '=', False)]}"/>
                     </group>
                </group>
            </field>
        </record>

    </data>
</odoo>
