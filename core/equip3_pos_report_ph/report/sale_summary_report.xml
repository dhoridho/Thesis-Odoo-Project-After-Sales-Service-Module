<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="inherit_report_sales_summary" inherit_id="equip3_pos_report.report_sales_summary">
            <xpath expr="//div[@id='ph_report']" position="inside">
                <div t-if="is_ph_template" class="text-center">
                
                    <p style="margin:1px 0px;font-size:14px;"><span t-field="o.company_id.name"/></p>
                    <p style="margin:1px 0px;font-size:14px;"><span t-field="o.pos_branch_id.name"/></p>
                    <p style="margin:1px 0px;font-size:14px;"><span t-esc="o.company_id.street or o.company_id.street2"/> <span t-field="o.company_id.city_id"/></p>
                    <p style="margin:1px 0px;font-size:14px;" t-if="o.company_id.company_npwp">VAT REG TIN : <span t-field="o.company_id.company_npwp"/></p>
                    <!-- <p style="margin:1px 0px;font-size:14px;" t-if="o.config_id.ph_ptu_number">PTU NO : <span t-field="o.config_id.ph_ptu_number"/></p> -->
            <!--         <p style="margin: 1px 0px;font-size:14px;" >
                        <t t-if="o.name">POS S/N : <span style="margin-right: 10px;" t-esc="o.name.split('/')[1]"/></t>
                        <t t-if="o.config_id.ph_machine_identification_number">MIN : <span t-esc="o.config_id.ph_machine_identification_number"/></t>
                    </p> -->
                    <br/>
                </div>
            </xpath>
            <xpath expr="//table[@id='payments_table']" position="after">
                <br/><br/>
                <table width="100%" class="vat_breakdown_table">
                    <tr>
                        <td colspan="2" style="padding-top:1px;border:1px solid black;color:#ffffff; background-color: #333333;" class='text-center'><span><h3>VAT Breakdown</h3></span></td>
                    </tr>
                    <t t-set="vat_total" t-value="0.0"/>
                    <tr>
                        <td width="50%"><span>VATable</span></td>
                        <td width="50%"><span t-esc="ph_vat_breakdown['VATable']" class="pull-right" t-options="{'widget': 'float', 'precision': currency_precision}"/></td>
                        <t t-set="vat_total" t-value="vat_total+ph_vat_breakdown['VATable']"/>
                    </tr>
                    <tr>
                        <td width="50%"><span>VAT-Exempt</span></td>
                        <td width="50%"><span t-esc="ph_vat_breakdown['VAT exempt']" class="pull-right" t-options="{'widget': 'float', 'precision': currency_precision}"/></td>
                        <t t-set="vat_total" t-value="vat_total+ph_vat_breakdown['VAT exempt']"/>
                    </tr>
                    <tr>
                        <td width="50%"><span>VAT Zero-Rated</span></td>
                        <td width="50%"><span t-esc="ph_vat_breakdown['VAT zero rate']" class="pull-right" t-options="{'widget': 'float', 'precision': currency_precision}"/></td>
                         <t t-set="vat_total" t-value="vat_total+ph_vat_breakdown['VAT zero rate']"/>
                    </tr>

                    <tr>
                        <td width="50%"><b><span>Total</span></b></td>
                        <td width="50%"><b><span t-esc="vat_total" class="pull-right" t-options="{'widget': 'float', 'precision': currency_precision}"/></b></td>
                    </tr>
                </table>
            </xpath>
        </template>
    </data>
</odoo>