<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="inherit_pos_sale_report_template" inherit_id="equip3_pos_general.pos_sale_report_template">
            <xpath expr="//div[@id='report_title_super_top']" position="replace">
                <div id="report_title_super_top" style="margin-top:10px;">
                  <div t-field="o.config_id.name"/>
                  <div> Operated <span t-field="o.company_id.name"/></div>
              </div>
            </xpath>
            <xpath expr="//div[@id='ph_report']" position="inside">
                <div t-if="data and 'form' in data and data['form']['is_ph_template']" class="text-center">
                    <div style="color: #51565b;">
                        <span t-att-style="'font-family:'+user_id.company_id.font_id.family+';font-size:'+str(user_id.company_id.font_size)+'px;'" t-if="o.company_id.company_npwp"><strong>VAT REG TIN </strong> : <span t-field="o.company_id.company_npwp"/>
                        </span>
                    </div>
                    <div style="color: #51565b;">
                        <span t-att-style="'font-family:'+user_id.company_id.font_id.family+';font-size:'+str(user_id.company_id.font_size)+'px;'" t-if="o.config_id.ph_ptu_number"><strong>PTU NO</strong> : <span t-field="o.config_id.ph_ptu_number"/></span>
                    </div>
                    <div style="color: #51565b;">
                        <span t-att-style="'font-family:'+user_id.company_id.font_id.family+';font-size:'+str(user_id.company_id.font_size)+'px;'" >
                            <t t-if="o.name"><strong>POS S/N </strong>: <span style="margin-right: 10px;" t-esc="o.name.split('/')[1]"/></t>
                            <t t-if="o.config_id.ph_machine_identification_number"><strong>MIN</strong> : <span t-esc="o.config_id.ph_machine_identification_number"/></t>
                        </span>
                    </div>
                </div>
            </xpath>

            <xpath expr="//table[@id='id-table-receivable_payment']" position="after">
                <br/>
                <table width="100%" class="vat_breakdown_table">
                    <t t-set='ph_vat_breakdown' t-value="o.ph_vat_breakdown()"/>
                    <tr>
                        <td colspan="2" style="padding-top:1px;border:1px solid black;color:#ffffff; background-color: #333333;" class='text-center'><span><h3>VAT Breakdown</h3></span></td>
                    </tr>
                    <tr>
                        <td width="50%"><span>VATable</span></td>
                        <td width="50%"><span t-esc="ph_vat_breakdown['VATable']" class="pull-right" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></td>
                    </tr>
                    <tr>
                        <td width="50%"><span>VAT-Exempt</span></td>
                        <td width="50%"><span t-esc="ph_vat_breakdown['VAT exempt']" class="pull-right" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></td>
                    </tr>
                    <tr>
                        <td width="50%"><span>VAT Zero-Rated</span></td>
                        <td width="50%"><span t-esc="ph_vat_breakdown['VAT zero rate']" class="pull-right" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></td>
                    </tr>

                    <tr>
                        <td width="50%"><b><span>Total</span></b></td>
                        <td width="50%"><b><span t-esc="ph_vat_breakdown['total']" class="pull-right" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></b></td>
                    </tr>
                </table>
            </xpath>

        </template>
    </data>
</odoo>