<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="assets_backend" name="sale_order assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" href="/equip3_sale_operation/static/src/scss/sale_sequence.scss"/>
            <link rel="stylesheet" href="/equip3_sale_operation/static/src/scss/order_lines.scss"/>
            <script type="text/javascript" src="/equip3_sale_operation/static/src/js/basic_renderer.js"></script>
            <script type="text/javascript" src="/equip3_sale_operation/static/src/js/relational_fields.js"></script>
            <script type="text/javascript" src="/equip3_sale_operation/static/src/js/sale_order_barcode.js"></script>
        </xpath>
    </template>
    <template id="assets_backend_inherit" name="equip3_sale_operation assets" inherit_id="sale_product_configurator.assets_backend">
        <xpath expr="//script[@src='/sale/static/src/js/variant_mixin.js']" position="replace">
            <script type="text/javascript" src="/equip3_sale_operation/static/src/js/variant_mixin.js"></script>
        </xpath>
        <xpath expr="//script[@src='/sale_product_configurator/static/src/js/product_configurator_controller.js']" position="replace">
            <script type="text/javascript" src="/equip3_sale_operation/static/src/js/product_configurator_controller.js"></script>
        </xpath>
        <xpath expr="//script[@src='/sale_product_configurator/static/src/js/product_configurator_widget.js']" position="replace">
            <script type="text/javascript" src="/equip3_sale_operation/static/src/js/product_configurator_widget.js"></script>
        </xpath>
    </template>

</odoo>
