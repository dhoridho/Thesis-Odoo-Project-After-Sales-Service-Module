<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_sale_terms_and_conditions_form" model="ir.ui.view">
        <field name="name">sale.terms.and.conditions.from</field>
        <field name="model">sale.terms.and.conditions</field>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <form string="terms and conditions">               
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                    <group>
                        <field name="terms_and_conditions" widget="html"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_sale_terms_and_conditions_tree" model="ir.ui.view">
        <field name="name">sale.terms.and.conditions.tree</field>
        <field name="model">sale.terms.and.conditions</field>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <tree string="terms and conditions">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>
    
    <record id="action_sale_terms_and_conditions" model="ir.actions.act_window">
        <field name="name">Terms &amp; Conditions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.terms.and.conditions</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_views_nocontent_create">    
           Click to add a new test object.
          </p>
        </field>
   </record>
    <!-- Change parent="sale.menu_sale_config"   -->
    <!-- Change sequence="1"   -->
   <menuitem name="Terms &amp; Conditions"
   id="menu_orders_sale_terms_and_conditions"
   parent="equip3_sale_masterdata.menu_sale_config_config"
   action="action_sale_terms_and_conditions"
   sequence="2"/>

</odoo>
