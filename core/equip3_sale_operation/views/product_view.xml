<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_template_tree_view_inherit_pagination" model="ir.ui.view">
            <field name="name">product.template.tree.view.inherit.pagination</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="limit">10</attribute>
                </xpath>
            </field>
        </record>

        <record id='inherit_product_pricelist_view_tree' model='ir.ui.view'>
            <field name='name'>inherit_product_pricelist_view_tree</field>
            <field name='model'>product.pricelist</field>
            <field name='inherit_id' ref='product.product_pricelist_view_tree'/>
            <field name='arch' type='xml'>
                <field name='company_id' position='before'>
                    <field name='branch_id' optional="show"/>
                </field>
            </field>
        </record>
    </data>
</odoo>