<odoo>

    <record id="view_form_approval_matrix_customer" model="ir.ui.view">
        <field name="name">approval.matrix.customer.form</field>
        <field name="model">approval.matrix.customer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="company_id" force_save="1"/>
                            <field name="branch_id" options="{'no_create':True,'no_create_edit':True}"/>
                        </group>
                        <group>
                            <field name="create_date"/>
                            <field name="create_uid"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Approving Matrix">
                            <field name="approval_matrix_line_ids" context="{'approval_matrix_line_ids': approval_matrix_line_ids}">
                                <tree editable="bottom" class="class_container_approver_matrix"> 
                                    <field name="sequence" widget="handle"/>
                                    <field name="sequence2" force_save="1" readonly="1" class="approver_matrix_sequence"/>
                                    <field name="filter_user_ids" invisible="1"/>
                                    <field name="user_ids" widget="many2many_tags" domain="filter_user_ids"/>
                                    <field name="minimum_approver" />
                                    <field name="approved_users" invisible="1"/>
                                    <field name="last_approved" invisible="1"/>
                                    <field name="approved" invisible="1"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="branch_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_approval_matrix_Customer" model="ir.ui.view">
        <field name="name">approval.matrix.customer.tree</field>
        <field name="model">approval.matrix.customer</field>
        <field name="arch" type="xml">
            <tree string="Approval Matrix Customer" >
                <field name ="name"/>
                <field name="branch_id"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="action_approval_matrix_customer" model="ir.actions.act_window">
        <field name="name">Customer Approval Matrix</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">approval.matrix.customer</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem
        id="approval_matrix_customer_configuration_menu"
        name="Customer Approval Matrix"
        parent="equip3_sale_operation.menu_approval_matrix_sale_order"
        action="action_approval_matrix_customer"
        sequence="6"/>
    

</odoo>
