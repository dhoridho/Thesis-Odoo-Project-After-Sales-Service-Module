    <record id="sh_sale_adv_settings_form_view" model="ir.ui.view">
        <field name="name">sh.sale.adv.settings.form.view</field>
        <field name="model">sale.adv.settings</field>
        <field name="arch" type="xml">
            <form string="Search Products Settings" create="false">
                <group>
                    <field name="name" invisible="1" />
                    <field name="sh_sale_pro_field_ids" widget="many2many_tags" options="{'no_create': True}" />
                    <field name="sh_sale_pro_attr_ids" widget="many2many_tags" options="{'no_create': True}" />
                </group>
            </form>
        </field>
    </record>

    <record id="sh_sale_adv_settings_action" model="ir.actions.act_window">
        <field name="name">Search Products Settings</field>
        <field name="res_model">sale.adv.settings</field>
        <field name="view_mode">form</field>
    </record>
