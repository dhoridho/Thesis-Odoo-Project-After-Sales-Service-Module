<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="res_config_sale_settings_view_form_mail" model="ir.ui.view">
        <field name="name">Automatic.send.mail.sale.config.settings.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='pricelist_configuration']/div[last()]" position="after">
                <div class="o_setting_right_pane" attrs="{'invisible': [('group_product_pricelist' ,'=', False)]}">
                    <label for="product_pricelist_default">Default Pricelist</label>
                    <field name="product_pricelist_default" />
                </div>
            </xpath>
<!--            <xpath expr="//field[@name='group_proforma_sales']/../.." position="after">-->
<!--                <div class="col-12 col-lg-6 o_setting_box">-->
<!--                    <div class="o_setting_left_pane">-->
<!--                        <field name="auto_mail" />-->
<!--                    </div>-->
<!--                    <div class="o_setting_right_pane">-->
<!--                        <label for="auto_mail" />-->
<!--                        <div class="text-muted">-->
<!--                            Send email automatically to customer for Quotation and confirmed order.-->
<!--                        </div>-->
<!--                    </div>-->
<!--                </div>-->
<!--            </xpath>-->
            <xpath expr="//div[@id='implementor_general_sales']" position="after">
                <div class="row mt16 o_settings_container" id="is_customer_partner_approval_matrix_mt16">
                    <div class="col-12 col-lg-6 o_setting_box" id="is_customer_partner_approval_matrix_col12" attrs="{'invisible': [('sales', '=', False)]}">
                        <div class="o_setting_box" attrs="{'invisible': [('sales', '=', False)]}">
                            <div class="o_setting_left_pane">
                                <field name="is_customer_partner_approval_matrix"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_customer_partner_approval_matrix"/>
                                <div class="text-muted">
                                    Set On/Off Customer Approval matrix
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>


            <xpath expr="//div[@name='catalog_setting_container']" position="after">
                <div class="app_settings_block">
                    <h2>Whatsapp To Customer</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane"></div>
                            <div class="o_setting_right_pane">
                                <label for="expired_date" />
                                <div class="text-muted">
                                    Set a default expiry of url for download document sent by whatsapp.
                                </div>
                                <div class="mt8">
                                    <field name="expired_date" /> Hours
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[@id='pricing_setting_container']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box"
                     id="multi_disc">
                    <div class="o_setting_left_pane">
                        <field name="multilevel_disc_sale"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="multilevel_disc_sale"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="res_config_sale_settings_view_form_hide" model="ir.ui.view">
        <field name="name">res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale_order_terms_knk.res_config_settings_view_form_sale_mod" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='use_sale_order_note']/../../.." position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@data-key='sale_management']/h2" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="res_config_sale_settings_view_form_hide_auto_done" model="ir.ui.view">
        <field name="name">res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='no_edit_order']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="res_config_settings_view_form_quotation_number" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale_quotation_number.res_config_settings_view_form_quotation_number" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='keep_name_so']/../.." position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="group_multi_do" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="group_multi_do" />
                        <div class="text-muted">
                            Create Multiple Delivery Order Based On Delivery Address.
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="is_wa_so_approval" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="is_wa_so_approval" />
                        <div class="text-muted">
                            If this is checked it will send a whatsapp notification to all SO Approver.
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="is_email_so_approval" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="is_email_so_approval" />
                        <div class="text-muted">
                            If this is checked it will send an email notification to all SO Apporver.
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="show_select_product_button" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="show_select_product_button" />
                        <div class="text-muted">
                            If this is checked it will appear in Quotation.
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="lock_sale_order" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="lock_sale_order" />
                        <div class="text-muted">
                            If this is checked it will lock all field in quotation.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

