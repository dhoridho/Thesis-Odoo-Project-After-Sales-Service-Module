<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_product_graph_inherit" model="ir.ui.view">
        <field name="name">sale.report.graph</field>
        <field name="model">sale.report</field>
        <field name="inherit_id" ref="sale.view_order_product_graph"/>
        <field name="arch" type="xml">
            <field name="price_subtotal" position="replace">
                <field name="discount_amount" string="Discounted Value" type="measure"/>
            </field>
        </field>
    </record>

    <record id="sale_report_pivot_inherit" model="ir.ui.view">
        <field name="name">sale.report.pivot.inherit</field>
        <field name="model">sale.report</field>
        <field name="inherit_id" ref="sale.view_order_product_pivot"/>
        <field name="arch" type="xml">
            <field name="team_id" position="after">
                <field name="payment_term_id" type="col"/>
            </field>
        </field>
    </record>
</odoo>