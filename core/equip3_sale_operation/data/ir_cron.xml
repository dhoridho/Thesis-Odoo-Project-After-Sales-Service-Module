<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="sale_order_auto_cancel_cron" model="ir.cron">
            <field name="name">Sale Order AutoCancel</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="state">code</field>
            <field name="code">model._action_sale_order_cancel()</field>
            <field name='interval_number'>1</field>
            <field name='interval_type'>days</field>
            <field name="numbercall">-1</field>
        </record>
        <record id="sale_order_auto_create_invoice_recurring" model="ir.cron">
            <field name="name">Auto Create Invoice Recurring</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="nextcall" eval="(DateTime.now()).strftime('%Y-%m-%d 03:00:00')" />
            <field name="state">code</field>
            <field name="code">model._action_sale_order_create_inv_recurring()</field>
            <field name='interval_number'>1</field>
            <field name='interval_type'>days</field>
            <field name="numbercall">-1</field>
        </record>
        
        <record model="ir.cron" id="update_state_customer_res_partner">
            <field name="name">Update State Customer Res Partner</field>
            <field name="model_id" ref="model_res_partner" />
            <field name="state">code</field>
            <field name="code">model.update_state_customer()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">False</field>
        </record>
    </data>
</odoo>
