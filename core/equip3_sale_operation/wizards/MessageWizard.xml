<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="acrux_chat_message_wizard_form" model="ir.ui.view">
        <field name="name">acrux.chat.message.wizard.form</field>
        <field name="model">acrux.chat.message.wizard</field>
        <field name="inherit_id" ref="acrux_chat_sale.acrux_chat_message_wizard_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='text']" position="after">
                <field name="attachment_ids" widget="many2many_binary"/>
            </xpath>
        </field>
    </record>

    <record id="whatsapp_message_wizard_form" model="ir.ui.view">
        <field name="model">whatsapp.message.wizard</field>
        <field name="inherit_id" ref="ss_whatsapp_connector.whatsapp_message_wizard_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='message']" position="after">
                <field name="attachment_ids" widget="many2many_binary" invisible="context.get('is_crm_lead', False)"/>
            </xpath>
        </field>
    </record>

</odoo>
