<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- sale.product.configurator inherit form view -->
        <record id="sale_product_configurator_view_form" model="ir.ui.view">
            <field name="name">sale.product.configurator.inherit.view.form</field>
            <field name="model">sale.product.configurator</field>
            <field name="inherit_id" ref="sale_product_configurator.sale_product_configurator_view_form"/>
            <field name="arch" type="xml">
                <!-- Add your xpath here -->
                <field name="product_template_id" position="after">
                    <field name="warehouse_id" required="1" attrs="{'readonly':[('is_single_warehouse','=',True)]}"/>
                    <field name="is_single_warehouse" invisible="1"/>
                </field>
            </field>
        </record>
    </data>
</odoo>