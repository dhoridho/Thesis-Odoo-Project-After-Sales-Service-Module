<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_sale_adv_wizard_form_view" model="ir.ui.view">
        <field name="name">sh.sale.adv.wizard.form.view</field>
        <field name="model">sale.adv.wizard</field>
        <field name="arch" type="xml">
            <form string="Select Products Advance">
                <field name="product_ids" options="{'no_create': True}" />
                <footer>
                    <button name="sh_sale_adv_select_btn" string="Select" type="object" class="oe_highlight" />
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
