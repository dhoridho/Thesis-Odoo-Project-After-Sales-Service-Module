<odoo>
    <data>
        <!-- Form view for Custom Financial Report -->
        <record id="view_custom_financial_report_form" model="ir.ui.view">
            <field name="name">manual.reconcile.report.form</field>
            <field name="model">manual.reconcile.report</field>
            <field name="arch" type="xml">
                <form string="Custom Financial Report">
                    <sheet>
                        <group>
                            <field name="company_id" readonly="1"/>
                            <field name="account_id"  readonly="1"/>
                            <field name="ending_date" readonly="1"/>
                            <field name="ending_balance" readonly="1"/>
                            <field name="difference" readonly="1"/>
                        </group>
                        <field name="account_move_line_ids" readonly="1">
                            <!-- Define inline tree view for the One2many field -->
                            <tree editable="bottom">
                                <field name="move_id"/>
                                <field name="name"/>
                                <field name="date"/>
                                <field name="company_id"/>
                                <field name="journal_id"/>
                                <field name="account_id"/>
                                <field name="partner_id"/>
                                <field name="balance"/>
                                <field name="manual_reconciled"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_custom_financial_report_tree" model="ir.ui.view">
            <field name="name">custom.financial.report.tree</field>
            <field name="model">manual.reconcile.report</field>
            <field name="arch" type="xml">
                <tree string="Custom Financial Reports">
                    <field name="company_id"/>
                    <field name="account_id"/>
                    <field name="ending_date"/>
                    <field name="ending_balance"/>
                    <field name="difference"/>
                </tree>
            </field>
        </record>

        <!-- Menu item for Custom Financial Reports -->
        <!--        <menuitem id="menu_custom_financial_report"-->
        <!--                  name="Custom Financial Reports"-->
        <!--                  action="action_custom_financial_report"-->
        <!--                  parent="account.menu_finance_reports"/>-->
        <record id="action_open_reconcile_page" model="ir.actions.act_url">
            <field name="name">Reconcile</field>
            <field name="type">ir.actions.act_url</field>
            <field name="url">/entries</field>
            <field name="target">new</field>
        </record>

        <record id="action_custom_financial_report" model="ir.actions.act_window">
            <field name="name">Manual Reconcile Reports</field>
            <field name="res_model">manual.reconcile.report</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="account.menu_finance_entries_actions"
                    parent="equip3_accounting_reports.unused_menu"
                  name="Actions "
        />

        <menuitem id="equip3_recon_wizard.custom_menuitem_accounting"
                    parent="account.menu_finance_entries"
                  name="Reconcile Bank"
                  sequence="11"
                  action="action_custom_financial_report"
                    groups="account.group_account_user,account.group_account_invoice"
        />
        

        

        <menuitem id="menu_custom_financial_report1"
                  name="Bank Reconciliation Wizard"
                  action="action_open_reconcile_page"
                  sequence="1"
                  groups="account.group_account_user,account.group_account_invoice"
                  parent="equip3_recon_wizard.custom_menuitem_accounting"/>

        <menuitem id="account_reconciliation_widget.menu_action_manual_reconciliation" name="Reconciliation" sequence="2" parent="equip3_recon_wizard.custom_menuitem_accounting"/>


        <!-- Action to open the list of Custom Financial Reports -->

    </data>
</odoo>
