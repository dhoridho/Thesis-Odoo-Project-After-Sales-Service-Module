<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- Add you code here -->
        <!-- blacklist.partner.wiz form view -->
        <record id="blacklist_partner_wiz_view_form" model="ir.ui.view">
            <field name="name">blacklist.partner.wiz.view.form</field>
            <field name="model">blacklist.partner.wiz</field>
            <field name="arch" type="xml">
                <form string="">
                    <p attrs="{'invisible':[('type','!=','blacklist')]}">This vendor will be blacklisted and not available for any transaction</p>
                    <p attrs="{'invisible':[('type','=','blacklist')]}">This vendor will be unblocked and will be available in all transaction</p>
                    <group>
                        <!-- Add your fields here -->
                        <field name="partner_id" invisible="1"/>
                        <field name="type" invisible="1"/>
                        <field name="user_id" attrs="{'invisible':[('type','!=','blacklist')], 'required':[('type','=','blacklist')]}" readonly="1" force_save="1"/>
                        <field name="reason" required="1"/>
                    </group>
                    <footer>
                        <button name="action_submit" string="Save" type="object" class="oe_highlight" />
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- blacklist.partner.wiz action window -->
        <record id="blacklist_partner_wiz_action" model="ir.actions.act_window">
            <field name="name">Blacklist</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">blacklist.partner.wiz</field>
            <field name="view_mode">form</field>
            <field name="context">{'default_partner_id':active_id,'default_type':'blacklist'}</field>
            <field name="target">new</field>
        </record>
        <record id="whitelist_partner_wiz_action" model="ir.actions.act_window">
            <field name="name">Unblacklist</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">blacklist.partner.wiz</field>
            <field name="view_mode">form</field>
            <field name="context">{'default_partner_id':active_id,'default_type':'whitelist'}</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>