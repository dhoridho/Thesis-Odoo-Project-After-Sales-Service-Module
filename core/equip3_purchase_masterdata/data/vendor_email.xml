<odoo>

    <!-- Vendors Email Templates-->
    <record id="email_template_vendor" model="mail.template">
        <field name="name">Reminder for Vendor Approval</field>
        <field name="email_from">${ctx.get('email_from')}</field>
        <field name="email_to">${ctx.get('email_to')}</field>
        <field name="subject">Reminder for Vendor Approval</field>
        <field name="model_id" ref="equip3_purchase_masterdata.model_res_partner"/>
        <field name="auto_delete" eval="True"/>
        <field name="body_html"><![CDATA[
            <p>Date: ${ctx.get('date')}</p>
            <p>Subject : Reminder for Vendor Approval</p>
            </br>
            <p>Dear ${ctx.get('approver_name')},</p>
            <p>Based on the Vendor Approval Request ${object.vendor_sequence}.</p>
            <p>You have approval pending that needs your decision to approve or reject the Vendor Approval Request from ${object.request_partner_id.name}.</p>
            </br>
            <p>You can approve or reject the Vendor request by clicking this button:</p>
            <div style = "margin: 16px;">
                <a href=${ctx.get('url')} style = "padding: 5px 10px; font-size: 12px; line-height: 18px;
                 color: #FFFFFF; border-color:#875A7B; text-decoration: none; display: inline-block; 
                 margin-bottom: 0px; font-weight: 400; text-align: center; vertical-align: middle; 
                 cursor: pointer; white-space: nowrap; background-image: none; background-color: #875A7B;
                 border: 1px solid #875A7B; border-radius:3px">View Vendor ${object.vendor_sequence}</a></div>
            <p>Thank you.</p>
            ]]></field>
    </record>

