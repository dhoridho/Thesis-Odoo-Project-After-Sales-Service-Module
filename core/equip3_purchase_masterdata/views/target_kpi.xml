<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- Add you code here -->
        <!-- target.kpi search view -->
        <record id="target_kpi_view_search" model="ir.ui.view">
            <field name="name">target.kpi.view.search</field>
            <field name="model">target.kpi</field>
            <field name="arch" type="xml">
                <search string="">
                    <!-- Add your fields here -->
                    <field name="name"/>
                    <field name="purchase_team_id"/>
                    <field name="user_id"/>
                    <field name="target_on"/>
                    <field name="branch_id"/>
                    <group expand="0" name="group_by" string="Group By">
                        <filter name="group_by_purchase_team" string="Purchase Team" context="{'group_by' : 'purchase_team_id'}"/>
                        <filter name="group_by_user" string="Purchase Person" context="{'group_by' : 'user_id'}"/>
                        <filter name="group_by_target_on" string="Target On" context="{'group_by' : 'target_on'}"/>
                        <filter name="group_by_branch_id" string="Branch" context="{'group_by' : 'branch_id'}"/>
                        <filter name="group_by_from_date" string="From Date" context="{'group_by' : 'from_date'}"/>
                        <filter name="group_by_to_date" string="To Date" context="{'group_by' : 'to_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- target.kpi tree view -->
        <record id="target_kpi_view_tree" model="ir.ui.view">
            <field name="name">target.kpi.view.tree</field>
            <field name="model">target.kpi</field>
            <field name="arch" type="xml">
                <tree>
                        <!-- Add your fields here -->
                    <field name="name" decoration-bf="name != False"/>
                    <field name="user_id"/>
                    <field name="target_based_on_ids" widget="many2many_tags"/>
                    <field name="from_date"/>
                    <field name="to_date"/>
                    <field name="target_on"/>
                    <field name="current_achievement"/>
                    <field name="main_target"/>
                    <field name="state"/>
                    <field name="branch_id"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <!-- target.kpi form view -->
        <record id="target_kpi_view_form" model="ir.ui.view">
            <field name="name">target.kpi.view.form</field>
            <field name="model">target.kpi</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                        <button string="Confirm" name="action_confirm" type="object" class="oe_highlight" states="draft"/>
                        <button string="Cancel" name="action_cancel" type="object" class="" states="draft,confirm"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" required="True"/>
                            </h1>
                        </div>
                        <group>
                            <!-- Add your fields here -->
                            <group>
                                <field name="purchase_team_id"/>
                                <field name="user_id"/>
                                <field name="company_id"/>
                                <field name="branch_id"/>
                                <field name="target_based_on_ids" widget="many2many_tags" options="{'no_create':1,'no_create_edit':1}"/>
                                <field name="main_target"/>
                                <field name="current_achievement"/>
                                <label for="kpi_progress"/>
                                <div class="o_row" name="kpi_progress">
                                    <field name="kpi_progress" nolabel="1"/>
                                    <span>%</span>
                                </div>
                            </group>
                            <group>
                                <field name="create_date"/>
                                <field name="create_uid"/>
                                <field name="from_date"/>
                                <field name="to_date"/>
                                <label for="select_type" string="Product Based On"/>
                                <div>
                                    <field name="select_type" widget="radio"/>
                                    <field name="is_product_category" invisible="1"/>
                                    <field name="is_products" invisible="1"/>
                                </div>
<!--                                <div></div>-->
<!--                                <div>-->
<!--                                    <field name="is_product_category" nolabel="1"/>-->
<!--                                    <label for="is_product_category" class="oe_inline"/>-->
<!--                                </div>-->
                                <field name="product_categories" widget="many2many_tags" attrs="{'invisible': [('is_product_category','!=',True)],'required': [('is_product_category','=',True)]}"/>
<!--                                <div></div>-->
<!--                                <div>-->
<!--                                    <field name="is_products" nolabel="1"/>-->
<!--                                    <label for="is_products" class="oe_inline"/>-->
<!--                                </div>-->
                                <field name="products" widget="many2many_tags" attrs="{'invisible': [('is_products','!=',True)],'required': [('is_products','=',True)]}"/>
                                <field name="target_on" widget="radio"/>
                                <field name="target_left"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- target.kpi kanban view -->
        <record id="target_kpi_view_kanban" model="ir.ui.view">
            <field name="name">target.kpi.view.kanban</field>
            <field name="model">target.kpi</field>
            <field name="arch" type="xml">
                <kanban string="">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="purchase_team_id"/>
                    <field name="target_based_on_ids" widget="many2many_tags"/>
                    <field name="from_date"/>
                    <field name="to_date"/>
                    <field name="target_on"/>
                    <field name="current_achievement"/>
                    <field name="main_target"/>
                    <field name="kpi_progress"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_dropdown_kanban dropdown">

                                    <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown" data-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                                    </div>
                                </div>
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_title text-center">
                                        <field name="name"/><br/>
                                        <h1><strong><t t-esc="record.current_achievement.value"/> / <t t-esc="record.main_target.value"/></strong></h1>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                        <t t-if="record.purchase_team_id.value">
                                            <t t-esc="record.purchase_team_id.value"/><br/>
                                        </t>
                                            <t t-esc="record.user_id.value"/>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <field name="kpi_progress" widget="progressbar"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="oe_clear"/>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- target.kpi action window -->
        <record id="target_kpi_action" model="ir.actions.act_window">
            <field name="name">Target KPI</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">target.kpi</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p><p>
                    <!-- More details about what a user can do with this object will be OK --> 
                </p>
            </field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="target_kpi_menu_act" name="Target KPI" parent="equip3_purchase_masterdata.purchase_team_menu_categ" action="target_kpi_action" sequence="20"/>
    </data>
</odoo>