<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- dev.purchase.team inherit form view -->
        <record id="inherit_view_dev_purchase_team_form" model="ir.ui.view">
            <field name="name">dev.purchase.team.inherit.view.form</field>
            <field name="model">dev.purchase.team</field>
            <field name="inherit_id" ref="dev_purchase_team.view_dev_purchase_team_form"/>
            <field name="arch" type="xml">
                <!-- Add your xpath here -->
                <field name="company_id" position="after">
                    <field name="branch_id" options="{'no_create':True,'no_create_edit':True}"/>
                </field>
            </field>
        </record>

        <!-- dev.purchase.team inherit tree view -->
        <record id="inherit_view_dev_purchase_team_tree" model="ir.ui.view">
            <field name="name">dev.purchase.team.inherit.view.tree</field>
            <field name="model">dev.purchase.team</field>
            <field name="inherit_id" ref="dev_purchase_team.view_dev_purchase_team_tree"/>
            <field name="arch" type="xml">
                <!-- Add your xpath here -->
                <field name="company_id" position="before">
                    <field name="branch_id"/>
                </field>
            </field>
        </record>
    </data>
</odoo>