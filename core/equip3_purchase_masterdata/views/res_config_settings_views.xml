<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sh_vendor_signup_res_config_settings" model="ir.ui.view">
        <field name="name">purchase setting</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sh_vendor_signup.sh_vendor_signup_res_config_settings" />
        <field name="arch" type="xml">
            <xpath expr='//field[@name="is_enable_vendor_notification"]/../../..' position='inside'>
                <div id="vendor_sign_up_configuration" class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-offset-6 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_vendor_approval_email" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_vendor_approval_email" />
                            <p class='text-muted'>Email Notification for Vendor Approval.</p>
                        </div>
                    </div>

                    <div class="col-12 col-lg-offset-6 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_vendor_approval_whatsapp" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_vendor_approval_whatsapp" />
                            <p class='text-muted'>Whatsapp Notification for Vendor Approval.</p>
                        </div>
                    </div>

                    <div class="col-12 col-lg-offset-6 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_vendor_pricelist_approval_email" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_vendor_pricelist_approval_email" />
                            <p class='text-muted'>Email Notification for Vendor Pricelist Approval.</p>
                        </div>
                    </div>

                    <div class="col-12 col-lg-offset-6 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_vendor_pricelist_approval_whatsapp" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_vendor_pricelist_approval_whatsapp" />
                            <p class='text-muted'>Whatsapp Notification for Vendor Pricelist Approval.</p>
                        </div>
                    </div>

                </div>
            </xpath>
        </field>
    </record>

</odoo>
