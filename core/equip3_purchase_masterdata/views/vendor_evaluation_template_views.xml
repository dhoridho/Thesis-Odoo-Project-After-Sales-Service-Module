<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- vendor.evaluation.template search view -->
        <record id="vendor_evaluation_template_view_search" model="ir.ui.view">
            <field name="name">vendor.evaluation.template.view.search</field>
            <field name="model">vendor.evaluation.template</field>
            <field name="arch" type="xml">
                <search string="">
                    <!-- Add your fields here -->
                    <field name="name"/>
                </search>
            </field>
        </record>

        <!-- vendor.evaluation.template form view -->
        <record id="vendor_evaluation_template_view_form" model="ir.ui.view">
            <field name="name">vendor.evaluation.template.view.form</field>
            <field name="model">vendor.evaluation.template</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="qualitative_valuation" string="Qualitative Evaluation">
                                <field name="evaluation_lines">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="evaluation_template_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- vendor.evaluation.template tree view -->
        <record id="vendor_evaluation_template_view_tree" model="ir.ui.view">
            <field name="name">vendor.evaluation.template.view.tree</field>
            <field name="model">vendor.evaluation.template</field>
            <field name="arch" type="xml">
                <tree>
                    <!-- Add your fields here -->
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- vendor.evaluation.template action window -->
        <record id="action_vendor_evaluation_template" model="ir.actions.act_window">
            <field name="name">Vendor Evaluation Template</field>
            <field name="res_model">vendor.evaluation.template</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
            </field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <record id="vendor_evaluation.vendor_evaluation" model="ir.ui.menu">
            <field name="name">Vendor Evaluations</field>
        </record>
		<menuitem
				action="vendor_evaluation.vendor_evaluation_action" id="vendor_evaluation_menu_act" name="Vendor Evaluation"
				parent="vendor_evaluation.vendor_evaluation" sequence="1"/>
		<menuitem
				action="action_vendor_evaluation_template" id="vendor_evaluation_template_menu_act"
				parent="vendor_evaluation.vendor_evaluation" sequence="2"/>

    </data>
</odoo>