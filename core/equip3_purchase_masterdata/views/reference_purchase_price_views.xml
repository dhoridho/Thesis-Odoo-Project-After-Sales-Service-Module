<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <record id="product_reference_purchase_price_tree_view" model="ir.ui.view">
            <field name="name">reference.purchase.price.tree.view</field>
            <field name="model">reference.purchase.price</field>
            <field name="arch" type="xml">
                <tree string="Reference Purchase Price" decoration-muted="state in ('expired', 'cancel')">
                    <field name="product_tmpl_id"/>
                    <field name="product_id"/>

                    <field name="reference_purchase_price"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="company_id" readonly="1" groups="base.group_multi_company"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="product_reference_purchase_price_form_view" model="ir.ui.view">
            <field name="name">reference.purchase.price.form.view</field>
            <field name="model">reference.purchase.price</field>
            <field name="arch" type="xml">
                <form string="Reference Purchase Price">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" class="oe_highlight"
                                attrs="{'invisible': [('state', 'not in', ['draft'])]}"/>
                        <button name="action_cancel" type="object" string="Cancel"
                                attrs="{'invisible': [('state', 'not in', ['draft', 'active'])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,active"/>
                    </header>
                    <sheet>
                        <group string="Reference Purchase Price">
                            <field name="product_tmpl_id" string="Product" id="product_tmpl_id" attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
                            <field name="product_id" domain="[('product_tmpl_id', '=', product_tmpl_id)]" id="product_id" attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
                            <label for="price" string="Reference Purchase Price"/>
                            <div class="o_row">
                                <field name="reference_purchase_price" id="price" attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
                                <field name="currency_id" id="currency_id" attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
                            </div>
                            <label for="date_start" string="Validity"/>
                            <div class="o_row">
                                <field name="date_start" id="date_start" attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
                                 to
                                <field name="date_end" id="date_end" attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
                            </div>
                            <field name="create_date" modifiers="{'readonly':true}" id="create_date"/>
                            <field name="company_id" options="{'no_create': True}" readonly="1" force_save="1" id="company_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


		<record id="menu_product_reference_purchase_price_action" model="ir.actions.act_window">
			<field name="name">Reference Purchase Price</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">reference.purchase.price</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					Product Reference Purchase Price
				</p>
			</field>
		</record>

		<menuitem id="menu_product_reference_purchase_price"
				  name="Reference Purchase Price"
				  parent="purchase.menu_purchase_products"
				  sequence="25"
				  action="menu_product_reference_purchase_price_action"/>

	</data>
</odoo>