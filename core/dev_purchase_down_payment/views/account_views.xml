<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="is_record_created" invisible="1"/>
            </field>
            <xpath expr="//field[@name='amount_total'][1]" position="before">
                <field name="is_down_payment" invisible="1"/>
                <label for="down_payment_amount" string="- Down Payment"/>
                <field name="down_payment_amount" nolabel="1" widget="monetary" attrs="{'invisible': [('is_down_payment', '=', False)]}"/>
            </xpath>
            <!-- <xpath expr="//field[@name='amount_by_group']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('amount_tax', '=', 0), ('is_down_payment', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='amount_tax']" position="attributes">
                <attribute name="invisible">0</attribute>
                <attribute name="attrs">{'invisible': [('is_down_payment', '=', False)]}</attribute>
            </xpath> -->

            <xpath expr="//field[@name='amount_by_group']" position="attributes">
                <attribute name="attrs">{'invisible': ['|',('amount_tax', '!=', 0),('amount_tax', '=', 0)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='amount_by_group']" position="after">
                <field name="amount_tax" position="move"/>
            </xpath>
            <xpath expr="//field[@name='amount_by_group']" position="after">
                <field name="amount_tax" string='Taxes' attrs="{'invisible': ['|', ('amount_tax', '=', 0), ('is_down_payment', '=', True)]}"/>
            </xpath>
            
            <!-- <xpath expr="//field[@name='amount_total'][1]" position="after">
                <field name="total_down_payment_amount" class="oe_subtotal_footer_separator" attrs="{'invisible': [('is_down_payment', '=', False)]}"/>
            </xpath>
            <xpath expr="//field[@name='amount_total'][1]" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('amount_tax', '!=', 0), ('is_down_payment', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='amount_total'][2]" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('amount_tax', '=', 0), ('is_down_payment', '=', True)]}</attribute>
            </xpath> -->


            
            

        </field>
    </record>
</odoo>