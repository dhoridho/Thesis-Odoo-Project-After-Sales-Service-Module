<odoo>
    <record id="purchase_form_dev_purchase_down_payment_inherited" model="ir.ui.view">
        <field name="name">purchase.form.dev.purchase.down.payment.inherited</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header//button[@name='action_create_invoice'][1]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//header//button[@name='action_create_invoice'][2]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="hide_create_bill" invisible="1"/>
            </xpath>
            <field name="company_id" position="after">
                <field name="payment_status" invisible="1"/>
                <field name="is_down_payment" invisible="1"/>
            </field>
            <xpath expr="//header//button[@name='action_rfq_send'][1]" position="before">
                <button name="%(action_dev_purchase_down_payment)d"
                        string="Create Bill"
                        type="action"
                        context="{'create_bill':True}"
                        class="btn-primary"
                        attrs="{'invisible': ['|', ('state', '!=', 'purchase'), ('hide_create_bill', '=', True)]}"/>
            </xpath>
            <field name="amount_total" position="after">
                <label for="down_payment_amount" string="- Down Payment" attrs="{'invisible': [('is_down_payment', '=', False)]}"/>
                <field name="down_payment_amount" nolabel="1" attrs="{'invisible': [('is_down_payment', '=', False)]}" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <div class="oe_subtotal_footer_separator oe_inline" attrs="{'invisible': [('is_down_payment', '=', False)]}">
                    <label for="total_down_payment_amount" string="Total"/>
                </div>
                <field name="total_down_payment_amount" nolabel="1" attrs="{'invisible': [('is_down_payment', '=', False)]}" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
            </field>
        </field>
    </record>
</odoo>