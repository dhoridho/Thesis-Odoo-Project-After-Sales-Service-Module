<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="receipt_voucher_view_tree_inherit" model="ir.ui.view">
        <field name="name">receipt.voucher.view.tree.inherit</field>
        <field name="model">receipt.voucher</field>
        <field name="inherit_id" ref="equip3_accounting_operation.receipt_voucher_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount']" position="after">
                <field name="customer_invoice_ids" widget="many2many_tags" string="Invoice No."/>
            </xpath>
        </field>
    </record>

    <record id="vendor_view_voucher_tree_inherit" model="ir.ui.view">
        <field name="name">payment.voucher.view.tree.inherit</field>
        <field name="model">payment.voucher</field>
        <field name="inherit_id" ref="equip3_accounting_operation.vendor_view_voucher_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree//field[@name='amount']" position="after">
                <field name="vendor_bill_ids" widget="many2many_tags" string="Bill No."/>
            </xpath>
        </field>
    </record>
</odoo>