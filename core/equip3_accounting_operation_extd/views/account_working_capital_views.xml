<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="working_capital_form_view" model="ir.ui.view">
        <field name="name">working.capital.form.view</field>
        <field name="model">account.working.capital</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Validate" name="action_validate" type="object" class="oe_highlight" attrs="{'invisible': [('state','!=','draft')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,validate"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" readonly="1" placeholder="Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="bank_id" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="plafond_amount" attrs="{'readonly':[('state','!=','draft')]}" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="available_plafond_amount" attrs="{'readonly':[('state','!=','draft')]}" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="current_active_loan_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="remaining_plafond_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="currency_id" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="journal_id" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                        <group>
                            <field name="accounting_date" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <label for="date_from" string="Period"/>
                            <div>
                                <field name="date_from" class="oe_inline"
                                       attrs="{'readonly':[('state','!=','draft')]}"/>
                                       -
                                <field name="date_to" class="oe_inline" attrs="{'readonly':[('state','!=','draft')]}"
                                       nolabel="1"/>
                            </div>
                            <field name="cut_off_date" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="monthly_interest_rate" widget="percentage" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="daily_interest_rate" widget="percentage" />
                            
                            <field name="account_tag_ids" widget="many2many_tags" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="company_id" />
                            <field name="branch_id" attrs="{'readonly':[('state','!=','draft')]}" options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Item Lines">
                            <field name="account_working_capital_line_ids" attrs="{'readonly':[('state','!=','draft')]}">
                                <tree editable="bottom">
                                    <field name="date_from" />
                                    <field name="date_to" />
                                    <field name="plafond_amount" />
                                    <field name="interest_rate" widget="percentage"/>
                                    <field name="accumulated_interest_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <button string="Close" name="action_close" type="object" class="oe_highlight"/>
                                    <field name="currency_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="working_capital_tree_view" model="ir.ui.view">
        <field name="name">working.capital.tree.view</field>
        <field name="model">account.working.capital</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="bank_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="available_plafond_amount" widget="monetary"/>
                <field name="company_id"/>
                <field name="branch_id"/>
                <field name="state" widget="badge" decoration-success="state == 'validate'" decoration-muted="state == 'draft'"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="action_working_capital" model="ir.actions.act_window">
        <field name="name">Working Capital</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.working.capital</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="working_capital_menu"
        name="Working Capital"
        parent="equip3_accounting_operation.internal_cash_bank_transfer_menu"
        action="action_working_capital"
        sequence="3"/>

</odoo>