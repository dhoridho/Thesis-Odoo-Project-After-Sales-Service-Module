<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_weather" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.weather</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='languages']" position="after">
                <h2>Open Weather</h2>
                <div class="row mt16 o_settings_container" name="open_weather">
                    <div class="col-12 col-lg-6 o_setting_box" id="open_weather_fields">
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="oweather_apikey" class="col-lg-3 o_light_label" string="API Key"/>
                                    <field name="oweather_apikey"/>
                                </div>
                                <div class="row mt16">
                                    <label for="oweather_units" class="col-lg-3 o_light_label" string="Units"/>
                                    <field name="oweather_units"/>
                                </div>
                                <div class="row mt16">
                                    <label for="oweather_theme_id" class="col-lg-3 o_light_label" string="Theme"/>
                                    <field name="oweather_theme_id" options="{'no_create': 1, 'no_create_edit': 1}"/>
                                </div>
                                <div class="row mt16">
                                    <label for="oweather_widget_id" class="col-lg-3 o_light_label" string="Widget"/>
                                    <field name="oweather_widget_id" options="{'no_create': 1, 'no_create_edit': 1}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="open_weather_preview">

                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
