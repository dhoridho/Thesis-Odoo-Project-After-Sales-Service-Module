<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_add_nomor_seri_efaktur_wizard_form" model="ir.ui.view">
            <field name="name">add.nomor.seri.efaktur.wizard.form</field>
            <field name="model">nomor.seri.efaktur.wizard</field>
            <field name="arch" type="xml">
                <form string="Add Nomor Seri E-faktur">
                    <group>
                        <group>
                            <field name="l10n_id_kode_transaksi" string="Kode Transaksi"/>
                            <field name="status_code" string="Status Code"/>
                            <field name="nomor_seri" string="Nomor Seri"/>
                        </group>
                        <group>
                            <field name="l10n_id_tax_number" string="Tax Number"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Apply" type="object" name="apply_nomor_seri" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_nomor_seri_efaktur" model="ir.actions.act_window">
            <field name="name">Add Nomor Seri </field>
            <field name="res_model">account.debit.note</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_add_nomor_seri_efaktur_wizard_form"/>
            <field name="target">new</field>
            <field name="binding_model_id" ref="account.model_account_move" />
            <field name="binding_view_types">list</field>
        </record>

        <record id="action_add_nomor_seri_efaktur" model="ir.actions.server">
            <field name="name">Add Nomor Seri E-faktur</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="state">code</field>
            <field name="code">action = records._add_nomor_seri_efaktur()</field>
        </record>
    </data>
</odoo>
