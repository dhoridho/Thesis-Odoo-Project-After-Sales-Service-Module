<odoo>
    <data>
        <record id="export_product_wizard_form" model="ir.ui.view">
            <field name="name">product.template.form</field>
	        <field name="model">export.product.csv</field>
            <field name="arch" type="xml">
            	<form>
            		<sheet>
            			<div>
                        	<span>Klik tombol Export di bawah untuk mulai export barang/jasa. Data yang diexport adalah product yang belum di export ke E-Faktur</span>
                    	</div>
                    	<div>
                        	<span>Setelah Proses Export Barang/Jasa selesai dilakukan, download file : </span>
                        </div>
                        <div>
                        	<img src='/equip3_accounting_efaktur/static/src/img/download.png'/>
                        </div>
                        <div>
                        	<span>Lalu import ke program E-faktur DJP melalui menu <strong>Referensi - Barang/Jasa - Import</strong></span>
                        </div>
                    </sheet>
                    <footer>
                        <button string="Export" name="download_efaktur" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="export_product_wizard_action" model="ir.actions.act_window">
            <field name="name">Export Product</field>
            <field name="res_model">export.product.csv</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="export_product_wizard_form"/>
            <field name="target">new</field>
        </record>

        <menuitem action="export_product_wizard_action" id="menu_export_product" sequence="20" groups="account.group_account_readonly" parent="equip3_accounting_efaktur.menu_efaktur"/>
        
    </data>
</odoo>