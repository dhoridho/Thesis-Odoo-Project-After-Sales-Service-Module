<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="efaktur_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.efaktur.inherit.account</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="40"/>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]/div[@data-key='account']" position="inside">
                <h2>PJAP Integration</h2>
                <div class="row mt16 o_settings_container" name="bank_integration_setting_container">
                    <div class="col-12 col-lg-12 o_setting_box" id="bank_integration_setting">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <div class="row mt8">
                                <field name="validate_api_express" invisible='1'/>
                                <field name="validate_api_first" invisible='1'/>
                                <field name="validate_api_express_fail" invisible='1'/>
                            </div>
                            <div class="row mt8">
                                <label for="is_pajak_express_integration" name="Pajak Express Integration" class="col-lg-3"/>
                                <field name="is_pajak_express_integration"/>
                                <field name="group_is_pajak_express_integration" invisible='1'/>
                            </div>
                            <div class="row mt8" attrs="{'invisible': [('is_pajak_express_integration', '!=', True)]}">
                                <label for="pajak_express_url" class="col-lg-3"/>
                                <field name="pajak_express_url" />
                                <span class="o_light_label" attrs="{'invisible': ['|',('validate_api_express_fail', '!=', True),('validate_api_first', '=', False)]}" style="color:red"> Authentication failed</span>
                                <span class="o_light_label" attrs="{'invisible': ['|',('validate_api_express', '!=', True),('validate_api_first', '=', False)]}" style="color:green;"> Authentication is Valid !</span>
                            </div>
                            <div class="row mt8" attrs="{'invisible': [('is_pajak_express_integration', '!=', True)]}">
                                <label for="pajak_express_transaction_url" class="col-lg-3"/>
                                <field name="pajak_express_transaction_url" />
                            </div>
                            <div class="row mt8" attrs="{'invisible': [('is_pajak_express_integration', '!=', True)]}">
                                <label for="pajak_express_username" class="col-lg-3"/>
                                <field name="pajak_express_username" attrs="{'required': [('pajak_express_url', '!=', False)]}"/>
                            </div>
                            <div class="row mt8" attrs="{'invisible': [('is_pajak_express_integration', '!=', True)]}">
                                <label for="pajak_express_password" class="col-lg-3"/>
                                <field name="pajak_express_password" password="True" attrs="{'required': [('pajak_express_url', '!=', False)]}"/>
                            </div>
                            <div class="row mt8" attrs="{'invisible': [('is_pajak_express_integration', '!=', True)]}">
                                <button name="cek_pajak_express_credential" type="object" string="Validate" class="btn-primary" />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
