<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_form_res_company" model="ir.ui.view">
        <field name="name">res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="generate_pjap_x_token" type="object" string="Generate PJAP X-Token"/>
                </header>
            </xpath>
            <xpath expr="//field[@name='vat']" position="attributes">
                <attribute name="placeholder">xx.xxx.xxx.x-xxx.xxx</attribute>
                <attribute name="widget">mask</attribute>
                <attribute name="data-inputmask">'mask': '99.999.999.9-999.999'</attribute>
                <attribute name="string">NPWP</attribute>
            </xpath>
            <xpath expr="//field[@name='anglo_saxon_accounting']" position="after">
                <field name="is_centralized_efaktur" />
            </xpath>
            <xpath expr="//group[@name='social_media']" position="after">
                <group>
                    <field name="is_use_nik_for_ebupot"/>
                    <field name="tax_cutter_nik" attrs="{'invisible': [('is_use_nik_for_ebupot','=',False)]}"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="view_form_res_company_general_features" model="ir.ui.view">
        <field name="name">res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="equip3_general_features.view_form_res_company"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='create_uid']" position="after">
                <field name="pjap_x_token" readonly="1" force_save="1"/>
            </xpath>
        </field>
    </record>
</odoo>