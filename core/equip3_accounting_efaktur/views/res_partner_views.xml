        <record id="res_partner_new_inherit" model="ir.ui.view">
            <field name="name">res.partner.tax.form.view</field> 
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='street']" position="replace">
                    <field name="street" placeholder="Street..." class="o_address_street col-md-7" style="display:inline-block;margin-right:2%" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                    <field name="street_number" placeholder="Nomor..."  class="o_address_street col-md-4" style="display:inline-block;padding-left: 10px;margin-left:13px" />
                </xpath>
                <xpath expr="//field[@name='street2']" position="replace">
                    <field name="street2" placeholder="Street 2..." class="o_address_street col-md-7" style="display:inline-block;margin-right:2%" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                    <field name="street_number2" placeholder="Nomor 2..." class="o_address_street col-md-4" style="display:inline-block;padding-left: 10px;margin-left:13px" />
                </xpath>
                <xpath expr="//field[@name='street_number2']" position="after">
                    <field name="blok" placeholder="Blok" class="o_address_city col-md-3" />
                    <field name="rukun_tetangga" placeholder="RT" class="o_address_city col-md-4" />
                    <field name="rukun_warga" placeholder="RW" class="o_address_city col-md-4" />
                    <field name="kelurahan" placeholder="Kelurahan" class="o_address_street" />
                    <field name="kecamatan" placeholder="Kecamatan" class="o_address_street" />
                </xpath>
                <!-- <xpath expr="//field[@name='vat']" position="before">
                    <field name="country_code" invisible="1"/>
                    <field name="l10n_id_pkp" string="ID PKP" attrs="{'invisible': [('country_code', '!=', 'ID')]}"/>
                </xpath> -->
                <xpath expr="//field[@name='l10n_id_pkp']" position="after">
                    <field name="vat" string="NPWP" placeholder="xx.xxx.xxx.x-xxx.xxx"/>
                    <field name="faktur_pajak_gabungan"/>
                </xpath>

            </field>
        </record>

        <record id="view_partner_supplier_ebupot_details_form" model="ir.ui.view">
            <field name="name">res.partner.supplier.ebupot.details.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="equip3_accounting_masterdata.view_partner_supplier_ebupot_details_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook[last()]/page[@name='ebupot']" position="attributes">
                    <attribute name="invisible">0</attribute>
                </xpath>
                <xpath expr="//field[@name='desc_other_tax']" position="after">
                    <field name="overpayment_processed_by" />
                </xpath>
            </field>
        </record>

    <data>
        <!-- Load css File -->
        <template id="my_custom_css_asset" name="my_custom_css assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <link rel="stylesheet" href="/equip3_accounting_efaktur/static/src/css/style.css"/>
            </xpath>
        </template>
    </data>
