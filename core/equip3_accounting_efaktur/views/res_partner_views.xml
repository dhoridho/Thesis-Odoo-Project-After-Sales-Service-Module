        <record id="res_partner_tax_form_view_inherit" model="ir.ui.view">
            <field name="name">res.partner.tax.form.view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="l10n_id_efaktur.res_partner_tax_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group/field[@name='country_code']" position="replace">
                    <field name="country_code" invisible="1"/>
                </xpath>
                <xpath expr="//group/field[@name='l10n_id_pkp']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

