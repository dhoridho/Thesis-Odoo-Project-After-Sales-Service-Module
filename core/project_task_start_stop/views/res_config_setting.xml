<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="project_start_stop_views" model="ir.ui.view">
        <field name="name">Project Start Stop</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="project.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-string='Project']/div" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <label for="task_color"/>
                        <div class="text-muted">
                          Add Color Value to show in running task.
                        </div>
                        <div class="content-group">
                            <div class="row mt16 ml4">
                                <field name="task_color" placeholder="e.g: #008000"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>

