<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="project_task_description_form" model="ir.ui.view">
        <field name="name">project.task.description.form</field>
        <field name="model">project.task.description</field>
        <field name="arch" type="xml">
            <form string="Task description"> 
                <group>
                    <field name="description"/>
                </group>
                <footer>
                    <button name ="button_start" type="object" string="Save" class="oe_highlight" />
                    <button special="cancel" string="Cancel"/>   
                </footer>         
            </form>
        </field>
    </record>
</odoo>

