<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_flow_wizard_view_form" model="ir.ui.view">
        <field name="name">sale_flow_wizard.view.form</field>
        <field name="model">sale.flow.wizard</field>
        <field name="arch" type="xml">
            <form string="Sales Flow">
                <script>
                    $(".o_control_panel").remove();
                </script>
                <sheet>
                    <h1>Sales Flow</h1>
                    <div class="container">
                        <br/>
                        <div class="row">
                            <div class="col-1">
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="button_customer" type="object" class="btn btn-secondary" width="75" height="80">
                                        <img src="/equip3_sale_configuration_flow/static/img/sales/customer.svg" width="30"/>
                                        <br/>
                                        Customer
                                    </button>
                                </div>
                            </div> 
                        </div>
                        <div class="row">   
                            <div class="col-1">
                                <br/><br/><br/>
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="button_pricelist" type="object" class="btn btn-secondary" width="75" height="80">
                                        <img src="/equip3_sale_configuration_flow/static/img/sales/pricelist.svg" width="30"/>
                                        <br/>
                                        Pricelist
                                    </button>
                                </div>
                                <br/><br/><br/><br/><br/>
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="button_add_product" type="object" class="btn btn-secondary" width="75" height="80">
                                        <img src="/equip3_sale_configuration_flow/static/img/sales/add-product.svg" width="30"/>
                                        <br/>
                                        Add Product
                                    </button>
                                </div>
                                <br/><br/><br/>
                            </div>
                            <div width="30"></div>
                            <div class="col my-auto m-0 p-0 text-center">
                                <button name="button_blanket_order" type="object" class="btn btn-secondary" width="75" height="80">
                                    <img src="/equip3_sale_configuration_flow/static/img/sales/purchase-blanket.svg" width="30"/>
                                    <br/>
                                    Blanket Order
                                 </button>
                            </div>
                            <div class="col m-0 my-auto p-0 text-center" width="55px">
                                <button name="button_fee_head" type="object" class="p-0" disabled="disabled">
                                    <i class="fa fa-arrow-right" style="font-size:4rem;"/>
                                </button>
                            </div>
                            <div class="col my-auto m-0 p-0 text-center">
                                <button name="button_blanket_order_approval" type="object" class="btn btn-secondary" width="75" height="95">
                                    <img src="/equip3_sale_configuration_flow/static/img/sales/blanket-order.svg" width="30"/>
                                    <br/>
                                    Blanket Order Approval
                                </button>
                            </div>
                            <div class="col m-0 my-auto p-0 text-center" width="55px">
                                <button name="button_fee_head" type="object" class="p-0" disabled="disabled">
                                    <i class="fa fa-arrow-right" style="font-size:4rem;"/>
                                </button>
                            </div>                            
                            <div class="col m-0 my-auto p-0 text-center">
                                <div class="row-1 m-0 my-auto p-0 align-items-end">
                                    <button name="button_fee_head" type="object" class="p-0" disabled="disabled">
                                        <i class="fa fa-arrow-right" style="font-size:4rem;  transform:rotate(-45deg)"/>
                                    </button>
                                </div>
                                <button name="button_quotation" type="object" class="btn btn-secondary" width="75" height="80">
                                    <img src="/equip3_sale_configuration_flow/static/img/sales/quotations.svg" width="30"/>
                                    <br/>
                                    Quotation
                                </button>
                                <div class="row-1 m-0 my-auto p-0 align-items-end">
                                    <button name="button_fee_head" type="object" class="p-0" disabled="disabled">
                                        <i class="fa fa-arrow-right" style="font-size:4rem;  transform:rotate(+45deg)"/>
                                    </button>
                                </div>                                
                            </div>
                            <div class="col-1 my-auto">
                                <div class="row m-0 p-0 my-auto align-items-center">
                                    <button name="button_sale_order_approval" type="object" class="btn btn-secondary" width="75" height="95">
                                        <img src="/equip3_sale_configuration_flow/static/img/sales/sale=order-approval.svg" width="30"/>
                                        <br/>
                                        Sale Order Approval
                                    </button>
                                </div>
                                <br/><br/><br/><br/><br/><br/><br/>
                                <br/><br/><br/>
                                <div class="row m-0 p-0 align-items-center">
                                    <button name="button_over_limit_approval" type="object" class="btn btn-secondary" width="75" height="95">
                                        <img src="/equip3_sale_configuration_flow/static/img/sales/over-limit-approval.svg" width="30"/>
                                        <br/>
                                        Over Limit Approval
                                    </button>
                                </div>
                            </div>
                            <div class="col m-0 my-auto p-0 text-center">
                                <div class="row-1 m-0 my-auto p-0 align-items-end">
                                    <button name="button_fee_head" type="object" class="p-0" disabled="disabled">
                                        <i class="fa fa-arrow-right" style="font-size:4rem;  transform:rotate(+45deg)"/>
                                    </button>
                                </div>
                                <button name="button_fee_head" type="object" class="btn btn-secondary" width="75" height="80">
                                    <img src="/equip3_sale_configuration_flow/static/img/sales/sales-order.svg" width="30"/>
                                    <br/>
                                    Sales Order
                                </button>
                                <div class="row-1 m-0 my-auto p-0 align-items-end">
                                    <button name="button_fee_head" type="object" class="p-0" disabled="disabled">
                                        <i class="fa fa-arrow-right" style="font-size:4rem;  transform:rotate(-45deg)"/>
                                    </button>
                                </div>
                            </div>
                            <div class="col m-0 my-auto p-0 text-center" width="55px">
                                <button name="button_fee_head" type="object" class="p-0" disabled="disabled">
                                    <i class="fa fa-arrow-right" style="font-size:4rem;"/>
                                </button>
                            </div>
                            <div class="col my-auto m-0 p-0 text-center">
                                <button name="button_delivery_order" type="object" class="btn btn-secondary" >
                                    <img src="/equip3_sale_configuration_flow/static/img/sales/delivery-ordersvg.svg" width="30"/>
                                    <br/>
                                    Delivery Order
                                </button>
                            </div>
                            <div class="col m-0 my-auto p-0 text-center" width="55px">
                                <button name="button_fee_head" type="object" class="p-0" disabled="disabled">
                                    <i class="fa fa-arrow-right" style="font-size:4rem;"/>
                                </button>
                            </div>
                            <div class="col my-auto m-0 p-0 text-center">
                                <button name="button_invoice" type="object" class="btn btn-secondary" width="75" height="80">
                                    <img src="/equip3_sale_configuration_flow/static/img/sales/invoices.svg" width="30"/>
                                    <br/>
                                    Invoice
                                </button>
                            </div>
                            <div width="30"></div>
                            <div class="col my-auto m-0 p-0 text-center">
                                <button name="button_reporting" type="object" class="btn btn-secondary" width="75" height="80">
                                    <img src="/equip3_sale_configuration_flow/static/img/sales/reporting.svg" width="30"/>
                                    <br/>
                                    Reporting
                                </button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-1">
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="button_one_time_set_up" type="object" class="btn btn-secondary" width="75" height="135">
                                    <img src="/equip3_sale_configuration_flow/static/img/sales/one-time-site.svg" width="30"/>
                                    <br/>
                                    Approval Matrix
                                </button>
                                </div>
                            </div> 
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sale_flow_wizard_action" model="ir.actions.act_window">
        <field name="name">Sales Flow </field>
        <field name="res_model">sale.flow.wizard</field>
        <field name="view_mode">form</field>
    </record>

    <record id="sale_configuration_flow_action_client" model="ir.actions.client">
        <field name="name">Sales Flow</field>
        <field name="tag">sale_configuration_flow_tag</field>
    </record>

    <menuitem
        id="sale_flow_wizard_menu"
        name="Sales Flow"
        action="sale_configuration_flow_action_client"
        parent="sale.sale_menu_root"
        sequence="1"/>

    <record id="equip3_sale_configuration_flow.sale_flow_wizard_menu" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-main-flow</field>
    </record>
</odoo>
