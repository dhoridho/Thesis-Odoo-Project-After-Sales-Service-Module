<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_applicant_data_document">
        <t t-call="web.external_layout">
            <t t-set="o" t-value="o.with_context(lang=o.user_id.partner_id.lang)"/>
            <div class="page">
                <style>
                    .bordered-table {
                        border-collapse: collapse;
                        border: 1px solid black;
                        width: 100%;
                        margin-top: 20px;
                    }

                    .table-header {
                        background-color: #be1e2d;
                        color: white;
                        text-align: center;
                        font-weight: bold;
                        padding: 10px 0 10px 0 !important;
                    }

                    .label-cell {
                        width: 330px;
                        font-weight: bold;
                        padding: 5px 5px 5px 15px;
                    }

                    .data-col-3 {
                        padding-left: 50px;
                    }
                </style>
                <div class="oe_structure"/>
                    <div>
                        <table class="bordered-table">
                            <tr>
                                <td colspan="3" class="table-header">APPLICANT DATA</td>
                            </tr>
                            <tr>
                                <td class="label-cell">Name</td>
                                <td>:</td>
                                <td class="data-col-3"><span t-field="o.partner_name"/></td>
                            </tr>
                            <tr>
                                <td class="label-cell">Email</td>
                                <td>:</td>
                                <td class="data-col-3"><span t-field="o.email_from"/></td>
                            </tr>
                            <tr>
                                <td class="label-cell">Identification No</td>
                                <td>:</td>
                                <td class="data-col-3"><span t-field="o.identification_no"/></td>
                            </tr>
                            <tr>
                                <td class="label-cell">Mobile Phone</td>
                                <td>:</td>
                                <td class="data-col-3"><span t-field="o.partner_mobile"/></td>
                            </tr>
                            <tr>
                                <td class="label-cell">Gender</td>
                                <td>:</td>
                                <td class="data-col-3"><span t-field="o.gender"/></td>
                            </tr>
                            <tr>
                                <td class="label-cell">Age</td>
                                <td>:</td>
                                <td class="data-col-3"><span t-field="o.birth_years"/></td>
                            </tr>
                            <tr>
                                <td class="label-cell">Degree</td>
                                <td>:</td>
                                <td class="data-col-3"><span t-field="o.type_id"/></td>
                            </tr>
                            <tr>
                                <td class="label-cell">Marital Status</td>
                                <td>:</td>
                                <td class="data-col-3"><span t-field="o.marital_status"/></td>
                            </tr>
                            <tr>
                                <td class="label-cell">Religion</td>
                                <td>:</td>
                                <td class="data-col-3"><span t-field="o.religion"/></td>
                            </tr>
                            <tr>
                                <td class="label-cell">Address</td>
                                <td>:</td>
                                <td class="data-col-3"><span t-field="o.address"/></td>
                            </tr>
                            <tr>
                                <td class="label-cell">Applied Job</td>
                                <td>:</td>
                                <td class="data-col-3"><span t-field="o.job_id"/></td>
                            </tr>
                            <tr>
                                <td class="label-cell">Department</td>
                                <td>:</td>
                                <td class="data-col-3"><span t-field="o.department_id"/></td>
                            </tr>
                            <tr>
                                <td class="label-cell">Availability</td>
                                <td>:</td>
                                <td class="data-col-3"><span t-field="o.availability"/></td>
                            </tr>
                            <tr>
                                <td class="label-cell">Expected Salary</td>
                                <td>:</td>
                                <td class="data-col-3"><span t-field="o.salary_expected"/></td>
                            </tr>
                        </table>
                    </div>
                <div class="oe_structure"/>
            </div>
        </t>
    </template>

    <template id="report_applicant_data">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="equip3_hr_print_applicant_data.report_applicant_data_document" t-lang="o.user_id.partner_id.lang"/>
            </t>
        </t>
    </template>
</odoo>
