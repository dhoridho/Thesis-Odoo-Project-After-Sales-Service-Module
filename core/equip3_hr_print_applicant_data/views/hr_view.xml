<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_applicant_form_inhfr" model="ir.ui.view">
        <field name="name">hr.applicant.form.inhfr</field>
        <field name="model">hr.applicant</field>
        <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button string="Print Applicant Data" name="print_applicantdata" type="object"/>
            </xpath>
            <xpath expr="//group/group" position="inside">
                <field string="Attachment Merge" name="hr_merge_pdf_attachment_ids" domain="[('mimetype','=','application/pdf'),('type','=','binary'),('res_model','=','hr.applicant'),('res_id','=',id)]" widget="many2many_tags" invisible='1'/>
            </xpath>
        </field>
    </record>

</odoo>