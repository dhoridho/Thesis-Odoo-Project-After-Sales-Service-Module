<odoo>
    <data>
        <record id="view_general_configuration_inherit" model="ir.ui.view">
            <field name="name">res.config.settings.form.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='integration']" position="after">
                    <h2>Customer Target</h2>
                    <div class="row mt16 o_settings_container" name="customer_target">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane" id="notifications_expiry_voucher">
                                <field name="notifications_expiry_voucher"/>
                            </div>
                            <div class="o_setting_right_pane" id="desc_notifications_expiry_voucher">
                                <label for="notifications_expiry_voucher"/>
                                <div class="text-muted">
                                    Set expiry duration for expiry voucher notification
                                </div>
                                <div id="notifications_time" attrs="{'invisible':[('notifications_expiry_voucher', '=', False)]}">
                                    <field name="notifications_time"/> Days
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
