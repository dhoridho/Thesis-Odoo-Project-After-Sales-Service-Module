<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- customer.voucher search view -->
        <record id="customer_voucher_view_search" model="ir.ui.view">
            <field name="name">customer.voucher.view.search</field>
            <field name="model">customer.voucher</field>
            <field name="arch" type="xml">
                <search string="Search Description">
                    <!-- Add your fields here -->
                    <field name="name"/>
                    <field name="customer_id"/>
                    <field name="customer_target_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="reward_type"/>
                    <field name="state"/>
                </search>
            </field>
        </record>

        <!-- customer.voucher tree view -->
        <record id="customer_voucher_view_tree" model="ir.ui.view">
            <field name="name">customer.voucher.view.tree</field>
            <field name="model">customer.voucher</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false" delete="true">
                    <!-- Add your fields here -->
                    <field name="name"/>
                    <field name="customer_id"/>
                    <field name="customer_target_id"/>
                    <field name="start_date" invisible='1'/>
                    <field name="end_date" invisible='1'/>
                    <field name="creation_date"/>
                    <field name="expired_date"/>
                    <field name="reward_type"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- customer.voucher form view -->
        <record id="customer_voucher_view_form" model="ir.ui.view">
            <field name="name">customer.voucher.view.form</field>
            <field name="model">customer.voucher</field>
            <field name="arch" type="xml">
                <form string="" create="false" edit="false" delete="true">
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <!-- Add your fields here -->
                            <group>
                                <field name="customer_id"/>
                                <field name="customer_target_id"/>
                                <field name="reward_type"/>
                            </group>
                            <group>
                                <field name="start_date" invisible='1'/>
                                <field name="end_date" invisible='1'/>
                                <field name="creation_date"/>
                                <field name="expired_date"/>
                                <field name="discount_line_product_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- customer.voucher form view -->
        <record id="apply_voucher_view_wizard_form" model="ir.ui.view">
            <field name="name">apply.voucher.view.wizard.form</field>
            <field name="model">apply.voucher</field>
            <field name="priority">99</field>
            <field name="arch" type="xml">
                <form string="Apply Voucher">
                        <group>
                            <!-- Add your fields here -->
                            <field name="customer_id" readonly='1' force_save='1'/>
                        </group>
                        <notebook>
                            <page string="Vouchers">
                                <field name="voucher_ids" readonly='0' force_save='1'>
                                    <tree editable="bottom" create="0" delete="0">
                                        <field name="is_apply_voucher" force_save='1'/>
                                        <field name="name" />
                                        <field name="reward_type" />
                                        <field name="discount_line_product_id" />
                                        <field name="expired_date" />
                                    </tree>
                                </field>
                            </page>
                        </notebook> 
                        <footer>
                            <button name="apply_voucher" string="Apply" type="object" class="btn-primary" />
                            <button name="check_all" string="Apply All" type="object" class="btn-primary"  />
                            <button string="Close" class="btn-default" special="cancel" />
                        </footer>
                </form>
            </field>
        </record>

        <!-- customer.voucher action window -->
        <record id="customer_voucher_action" model="ir.actions.act_window">
            <field name="name">Customer Voucher</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">customer.voucher</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p><p>
                    <!-- More details about what a user can do with this object will be OK --> 
                
                </p>
            </field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="customer_voucher_menu_act" name="Customer Voucher" parent="equip3_sale_masterdata.customer_menu" action="customer_voucher_action" sequence="20"/>
    </data>
</odoo>