<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="email_template_expiry_voucher" model="mail.template">
        <field name="name">Email Notification for expiry voucher</field>
        <field name="email_from">${ctx.get('email_from')}</field>
        <field name="email_to">${ctx.get('email_to')}</field>
        <field name="subject">Email Notification for expiry voucher</field>
        <field name="model_id" ref="equip3_sale_loyalty.model_customer_voucher"/>
        <field name="body_html"><![CDATA[
            <p>Hi, dear!</p>
            <p>You still have some vouchers that you have not used and will expire on ${ctx.get('expiry_date')}</p>
            <table style="width: 100%; max-width: 600px; border-spacing: 0; border: 1px solid black; line-height: 23px; text-align: center;">
                <tbody>
                    % for voucher in ctx.get('list_voucher'):
                        <tr style="border: 1px solid black;">
                            <td>
                                ${voucher.discount_line_product_id.name}
                            </td>
                        </tr>
                    % endfor
                </tbody>
            </table>
            <p>Don't forget to use your voucher!</p>
            ]]></field>
    </record>
</odoo>