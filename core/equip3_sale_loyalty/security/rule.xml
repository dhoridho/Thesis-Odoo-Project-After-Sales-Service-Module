<odoo noupdate="1">
    <record id="loyalty_rule" model="ir.rule">
        <field name="name">Loyalty Setting multi-company</field>
        <field name="model_id" ref="model_all_loyalty_setting" />
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>

    <record id="loyalty_history_rule" model="ir.rule">
        <field name="name">Loyalty history multi-company</field>
        <field name="model_id" ref="bi_loyalty_generic.model_all_loyalty_history" />
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>

</odoo>
