<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_picking_cancel_inherit_form_view" model="ir.ui.view">
        <field name="name">stock.picking.inherit.form.view</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <button name="action_cancel" position="after">
                <button name="picking_cancel" string="Cancel"
                        type="object"
                        groups="equip3_inventory_cancel.group_stock_picking_cancel"
                        attrs="{'invisible':[('state','!=','done')]}">
                </button>
            </button>
        </field>
    </record>
</odoo>
