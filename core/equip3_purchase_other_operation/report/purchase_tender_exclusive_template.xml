<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="tender_exclusive_external_layout">
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <t t-call="equip3_purchase_other_operation.purchase_tender_exclusive_header"/>
        <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
            <t t-raw="0"/>
        </div>
        <t t-call="general_template.templates_footer"/>
    </template>

    <template id="purchase_tender_exclusive_header">
        <div class="header" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                <tbody>
                    <tr>
                        <td>
                            <center>
                                <table border="0" cellpadding="0" cellspacing="0" style="padding:0px 20px 0px 20px; margin:0; background:#fff; line-height:20px;" width="100%">
                                    <tr>
                                        <td align="left" colspan="2" t-attf-style="color:#{text_color or '#ffffff'}; padding:0px 0px;" valign="top">
                                            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                <tr>
                                                    <td align="left" style="color:#4D4D4F; padding: 10px 20px 0px 20px; border-right: 1px solid #D4D1D1;" valign="top">
                                                        <img style="max-height: 50px; margin-top: 8%;" t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.logo)" t-if="o.company_id.logo"/>
                                                        <br/>
                                                    </td>
                                                    <td style="padding: 10px 20px 0px 20px;width:40%" valign="top">
                                                        <p t-attf-style="text-transform:capitalize; color: #{theme_color or '#ffffff'}; font-weight:bold;margin:0; margin-bottom:5px;">Address</p>
                                                        <t t-call="general_template.templates_company_details"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </center>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </template>
        
    <template id="report_purchasetender_document">
        <t t-call="equip3_purchase_other_operation.tender_exclusive_external_layout">
            <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
            <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color"/>
            <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color"/>
            <t t-set="company_color" t-value="o.company_id and o.company_id.company_color"/>
            <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color"/>
            <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color"/>
            <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color"/>
            <t t-set="text_color" t-value="o.company_id and o.company_id.text_color"/>
                <div width="100%" class="mt-5">
                    <t t-set="vendors_name" t-value="o._get_vendors_name()"/>
					<div style="padding:0px 20px 20px 20px; margin:0; background:#fff; line-height:20px;" width="100%">
						<div t-attf-style="background-color:#f2f2f2;border-bottom:1px solid #{theme_color or '#ececec'}; overflow: auto; margin-bottom: 20px;">
                            <div align="left" style="padding:15px; width:50%;float:left; margin-top: 10px;" valign="top">
                                <div class="purchase_tender_heder" style="margin-top: 10px;">
                                    <span t-attf-style="font-weight:bold;"> Purchase Representative: </span>
                                    <span t-esc="o.sh_purchase_user_id.name"/>
                                    <br/>
                                    <span t-attf-style="font-weight:bold;"> Vendor: </span>
                                    <span t-esc="vendors_name"/>
                                    <br/>
                                </div>
                            </div>
							<div align="right" style="padding:15px; width:50%;float:right; margin-top: 10px;" valign="top">
								<table t-attf-style="text-transform:capitalize; background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'};">
									<tr>
										<td t-attf-style="padding:9px 15px; font-weight:bold;">
											<strong>Purchase Tender :</strong>
                                        </td>
										<td t-attf-style="text-align:right; font-weight:bold; padding:9px 15px;">
											<span t-field="o.name"/>
                                        </td>
									</tr>
                                    <tr>
										<td t-attf-style="padding:5px 15px; font-weight:bold;">
											<strong>Tender Type :</strong>
                                        </td>
										<td t-attf-style="text-align:right; padding:5px 15px; width:45%;">
											<span t-field="o.sh_agreement_type"/>
										</td>
									</tr>
									<tr>
										<td colspan="2" t-attf-style="background-color:#f2f2f2; height:4px;"/>
										<td/>
									</tr>
									<tr>
										<td t-attf-style="padding:5px 15px; font-weight:bold;">
											<strong>Ordering Date :</strong>
                                        </td>
										<td t-attf-style="text-align:right; padding:5px 15px; width:45%;">
											<span t-field="o.sh_order_date"/>
										</td>
									</tr>
									<tr>
										<td t-attf-style="padding:5px 15px; font-weight:bold;">
											<span class="text-left">Status :</span>
										</td>
										<td t-attf-style="text-align:right; padding:5px 15px;">
											<span t-esc="dict(o._fields['state2'].selection).get(o.state2, '')"/>
										</td>
									</tr>
                                    <tr>
										<td t-attf-style="padding:5px 15px; font-weight:bold;">
                                            <span class="text-left">Expiry Date :</span>
										</td>
										<td t-attf-style="text-align:right; padding:5px 15px;">
                                            <span t-if="o.state2 == 'bid_submission'" t-esc="o.sh_bid_agreement_deadline" t-options="{'widget': 'datetime'}"/>
                                            <span t-if="o.state2 == 'bid_selection'" t-esc="o.sh_bid_selection_agreement_deadline" t-options="{'widget': 'datetime'}"/>
										</td>
									</tr>
								</table>
							</div>
						</div>
					</div>
                    <t t-set="vendors" t-value="o._get_vendors()"/>
                    <t t-foreach="vendors" t-as="vendor_line">
                        <t t-set="order_lines" t-value="o._get_purchase_vendor_lines(vendor_line)"/>
                        <table class="table table-bordered">
                            <tbody>
                                <tr t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'};">
                                    <th></th>
                                    <t t-foreach="vendor_line" t-as="vendor">
                                        <t t-set='comparison_id' t-value="o.comparison_ids.filtered(lambda r: r.partner_id.id == vendor.id)"/>
                                        <th align="center" colspan="2">
                                            <div class="text-center">
                                                <t t-esc="vendor.name"/>
                                                <br/>
                                                <t t-if="int(comparison_id.final_star) > 0">
                                                    <t t-foreach="range(0, int(comparison_id.final_star))" t-as="rating">
                                                        <span class="fa fa-star checked"></span>
                                                    </t>
                                                    <br/>
                                                </t>
                                                <span style="font-size:12px;"><t t-esc="round(comparison_id.on_time_rate, 2)"/> %  Delivery On Schedule</span>
                                                <br/>
                                                <span style="font-size:12px;"><t t-esc="round(comparison_id.fulfillment, 2)"/> % Fulfillment</span>
                                            </div>
                                        </th>
                                    </t>
                                </tr>
                                <tr t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'};">
                                    <th></th>
                                    <t t-foreach="vendor_line" t-as="vendor">
                                        <th class="text-right">Quantity</th>
                                        <th class="text-right">Unit Price</th>
                                    </t>
                                </tr>
                                <t t-foreach="order_lines" t-as="line">
                                    <tr>
                                        <td><span t-esc="line.get('product_name')"/></td>
                                        <t t-foreach="line.get('vendor_lines')" t-as="vendor_line">
                                            <td class="text-right"><span t-esc="vendor_line.get('quantity')"/></td>
                                            <td class="text-right"><span t-esc="vendor_line.get('unit_price')"/></td>
                                        </t>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <p style="page-break-before:always;" />
                    </t>
                </div>
        </t>
    </template>


    <template id="exclusive_report_purchase_tender">
		<t t-call="web.html_container">
			<t t-foreach="docs.purchase_agreement_ids" t-as="o">
				<t t-call="equip3_purchase_other_operation.report_purchasetender_document"/>
			</t>
		</t>
	</template>

</odoo>
