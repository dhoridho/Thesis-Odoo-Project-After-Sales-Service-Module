<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="analyze_quotation_report_template_external_layout">
        <!-- Multicompany -->
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <t t-call="equip3_purchase_other_operation.analyze_quotation_report_template_header"/>
        <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
            <t t-raw="0"/>
        </div>
        <t t-call="general_template.templates_footer"/>
    </template>

    <template id="analyze_quotation_report_template_header">
        <div class="header" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                <tbody>
                    <tr>
                        <td>
                            <center>
                                <table border="0" cellpadding="0" cellspacing="0" style="padding:0px 20px 0px 20px; margin:0; background:#fff; line-height:20px; vertical-align:middle; float:none;" width="100%">
                                    <tr>
                                        <td align="left" colspan="2" t-attf-style="vertical-align:middle; float:none; color:#{text_color or '#ffffff'}; padding:0 0px;" valign="top">
                                            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                <tr>
                                                    <td align="left" style="color:#4D4D4F; padding: 0px 15px; border-right: 1px solid #D4D1D1; width:10%; vertical-align:middle; float:none;" valign="middle">
                                                        <img style="max-height:80px; vertical-align: middle; float:none;" t-att-src="'data:image/png;base64,%s'%to_text(o.company_id.invoice_logo) or to_text(o.company_id.logo)" t-if="o.company_id.logo"/>
                                                        <br/>
                                                    </td>
                                                    <td style="padding:15px 0px 0px 15px; width:30%" valign="top">
                                                        <p t-attf-style="text-transform:capitalize; color: #{theme_color or '#ffffff'}; font-weight:bold;margin:0; margin-bottom:5px;">Address</p>
                                                        <t t-call="general_template.templates_company_details"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </center>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </template>

    <template id="report_analyze_quotations_template">
        <t t-call="equip3_purchase_other_operation.analyze_quotation_report_template_external_layout">
            <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color"/>
            <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color"/>
            <t t-set="company_color" t-value="o.company_id and o.company_id.company_color"/>
            <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color"/>
            <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color"/>
            <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color"/>
            <t t-set="text_color" t-value="o.company_id and o.company_id.text_color"/>
            <div class="page" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                <div class="oe_structure" />
                <t t-call="general_template.templates_watermark"/>
                <br />
                <div width="100%">
                    <div  style="padding:0px 20px 20px 20px; margin:0; background:#fff; line-height:22px;" width="100%">
                        <div>
                            <p  t-attf-style="padding:20px 0px 0px 0px; height:5px; border-bottom: 1px solid #{theme_color or '#000000'};"/>
                        </div>
                        <div align="left"  style="color:#4D4D4F; padding: 0px 0px 15px 0px;" valign="top">
                                <h3 class="text-center">Analyze Quotations</h3>
                        <br />
                        <br />

                        <t t-if="partner_quote_dic">
                            <t t-foreach="partner_quote_dic.keys()" t-as="partner">
                                <t t-set="partner_dic" t-value="partner_quote_dic[partner]" />
                                <t t-set='comparison_id' t-value="o.comparison_ids.filtered(lambda r:r.partner_id.id == partner)"/>
                                <strong>
                                    <t t-esc="partner_quote_dic[partner]['partner_name']" />
                                </strong>
                                <div class="d-flex">
                                    <t t-if="int(comparison_id.final_star) > 0">
                                        <t t-foreach="range(0, int(comparison_id.final_star))" t-as="rating">
                                            <span style="color:orange;" class="fa fa-star checked"></span>
                                        </t>
                                        <t t-esc="comparison_id.final_star"/>
                                        |
                                    </t>
                                    <span><t t-esc="round(comparison_id.on_time_rate, 2)"/> %  Delivery On Schedule</span> |
                                    <span><t t-esc="round(comparison_id.fulfillment, 2)"/> % Fulfillment</span>
                                </div>
                                <br />
                                <t t-foreach="partner_quote_dic[partner]['orders'].sorted(key=lambda quotation: quotation.name)" t-as="quote">
                                    <center>
                                        <strong><t t-esc="quote.name" /></strong>
                                    </center>
                                    <table BORDERCOLOR="#{theme_color or '#000000'}" border="1" cellpadding="0" cellspacing="0" class="table table-bordered mb-5" style="border:0.5px solid #ccc;  border-collapse: collapse; text-transform:capitalize; padding:15px;border-bottom:1px solid #ccc;" width="100%">
                                        <thead>
                                            <tr t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'};">
                                                <td align="left" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="15%">Product</td>
                                                <td align="center" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="8%">Description</td>
                                                <td align="right" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="15%%">Price</td>
                                                <td align="right" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="12%">Quantity</td>
                                                <td align="right" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="12%">Amount</td>
                                            </tr>
                                            <t t-set="total_amount" t-value="0.0" />
                                            <t t-foreach="quote.order_line" t-as="quote_line">
                                                <t t-set="lowest_price" t-value="product_price_dic.get(quote_line.product_id.id)" />
                                                <t t-set="style" t-value="''" />
                                                <t t-if="lowest_price==quote_line.price_unit">
                                                    <t t-set="style" t-value="'color:green;'" />
                                                </t>
                                                <tr t-att-style="style">
                                                    <t t-set="total_amount" t-value="total_amount+quote_line.price_subtotal" />

                                                    <td style="border: 1px solid black;">
                                                        <span t-esc="quote_line.product_id.name" />
                                                    </td>
                                                    <td style="border: 1px solid black;">
                                                        <span t-esc="quote_line.sh_product_description"/>
                                                    </td>
                                                    <td class="text-right" style="border: 1px solid black;">
                                                        <span t-esc="'%.2f'%quote_line.price_unit" />
                                                    </td>
                                                    <td class="text-right" style="border: 1px solid black;">
                                                        <span t-esc="'%.2f'%quote_line.product_qty" />
                                                    </td>
                                                    <td class="text-right" style="border: 1px solid black;">
                                                        <span t-esc="'%.2f'%quote_line.price_subtotal" />
                                                    </td>
                                                </tr>
                                            </t>
                                            <t t-set="quote_style" t-value="''" />
                                            <t t-if="quotation_lowest_total==total_amount">
                                                <t t-set="quote_style" t-value="'color:green;'" />
                                            </t>
                                            <tr t-att-style="quote_style">
                                                <td colspan="7" style="border: 1px solid black; text-align: right;">
                                                    <span t-esc="'%.2f'%total_amount" />
                                                </td>
                                            </tr>
                                        </thead>
                                    </table>
                                </t>
                            </t>
                        </t>
                        </div>
                </div>
            </div>
        </div>
        </t>
    </template>
    <template id="report_analyze_quot">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="equip3_purchase_other_operation.report_analyze_quotations_template" />
            </t>
        </t>
    </template>

</odoo>
