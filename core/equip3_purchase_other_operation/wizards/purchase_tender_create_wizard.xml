<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_tender_create_wizard_view_form" model="ir.ui.view">
        <field name="name">purchase.tender.create.wizard</field>
        <field name="model">purchase.tender.create.wizard</field>
        <field name="arch" type="xml">
            <form>
               <sheet>
                <group>
                    <group>
                        <field name="vendor_ids" required="1" widget="many2many_tags" context="{'res_partner_search_mode': 'supplier', 'show_vat': True,
							'tree_view_ref': 'equip3_purchase_operation.view_res_partner_line_tree',
							'default_is_vendor': 1,
							'search_default_supplier': 1}"/>
                        <field name="sh_source" invisible="1"/>
                        <field name="company_id" invisible="1"/>
                    </group>
                </group>
                <notebook>
                    <page string="Purchase Tender Lines">
                        <field name="product_line_ids">
                            <tree editable="bottom" create="false" delete="false"> 
                                <field name="request_id" readonly="1"/>
                                <field name="product_id" force_save="1" readonly="1"/>
                                <field name="product_description" force_save="1" readonly="1" />
                                <field name="remaning_qty" readonly="1" force_save="1"/>
                                <field name="tender_qty" />
                                <field name="uom" force_save="1" readonly="1"/>
                                <field name="pr_line_id" invisible="1"/>
                                <field name="destination_warehouse" invisible="1"/>
                                <field name="analytics_tag_ids" widget="many2many_tags" invisible="1"/>
                                <field name="schedule_date" invisible="1"/>

                            </tree>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" />
                    <button special="cancel" string="Cancel"/>
                </footer>
            </sheet>
        </form>
    </field>
</record> 

</odoo>
