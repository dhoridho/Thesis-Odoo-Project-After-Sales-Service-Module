<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="view_form_purchase_line_wiz" model="ir.ui.view">
            <field name="name">purchase.line.wiz</field>
            <field name="model">purchase.line.wiz</field> 
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="purchase_order_line_id" invisible="1"/>
                        <field name="name"/>
                    </group>
                    <footer>
                        <button name="action_reject" string="Submit" type="object" class="oe_highlight"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="act_open_purchase_line_wiz" model="ir.actions.act_window">
            <field name="name">Give Reason</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.line.wiz</field>
            <field name="view_mode">form</field>
            <field name="context">{'default_purchase_order_line_id':active_id}</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>