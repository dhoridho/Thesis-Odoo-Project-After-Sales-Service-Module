<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_form_print_tender" model="ir.ui.view">
        <field name="name">print.purchase.tender.report</field>
        <field name="model">print.purchase.tender.report</field> 
        <field name="arch" type="xml">
            <form string="Purchase Tender Report">
                <group>
                    <field name="selection" required="1" widget="radio"/>
                    <field name="purchase_agreement_ids" widget="many2many_tags" invisible="1"/>
                </group>
                <footer>
                    <button name="action_print_pdf" string="Print Pdf" type="object" class="oe_highlight" attrs="{'invisible':[('selection', '!=', 'pdf')]}"/>
                    <button name="action_print_xls" string="Print Xls" type="object" class="oe_highlight" attrs="{'invisible':[('selection', '!=', 'xls')]}"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
