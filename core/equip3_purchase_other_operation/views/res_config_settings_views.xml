<?xml version="1.0" encoding="utf-8"?>

<odoo>
    
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.form</field>
        <field name="model">res.config.settings</field> 
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='purchase_setting_container']" position="after">
                <div>
                    <h2>Purchase Tender</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-4 o_setting_box" attrs="{'invisible': [('is_good_services_order','=',True)]}">
                            <div class="o_setting_left_pane" />
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Purchase Tender Expiry Date</span>
                                <div class="text-muted">
                                    <field name="pt_expiry_date" /> Days
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-4 o_setting_box" attrs="{'invisible': [('is_good_services_order','=',False)]}">
                            <div class="o_setting_left_pane" />
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Tender Goods Order Expiry Date</span>
                                <div class="text-muted">
                                    <field name="pt_goods_order_expiry_date" /> Days
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-4 o_setting_box" attrs="{'invisible': [('is_good_services_order','=',False)]}">
                            <div class="o_setting_left_pane" />
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Tender Services Order Expiry Date</span>
                                <div class="text-muted">
                                    <field name="pt_service_order_expiry_date" /> Days
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-4 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_email_notification_tender" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_email_notification_tender" string="Email Notification for Purchase Tender Approval" />
                                <div class="text-muted">
                                    If is checked , it will be send an Email notification to all Purchase Tender Approver
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-4 o_setting_box" attrs="{'invisible': [('pt_expiry_notification','=',False)]}">
                            <div class="o_setting_left_pane">
                                <field name="pt_on_date_notify" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="pt_on_date_notify" string="On Expiry Date Notification" />
                                <div class="text-muted">
                                    On Document Expiry Date Notification
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-4 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="pt_expiry_notification" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="pt_expiry_notification" string="Document Expiry Notification" />
                                <div class="text-muted">
                                    Set Mail Document Expiry Notification
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-4 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_whatsapp_notification_tender" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_whatsapp_notification_tender" string="Whatsapp Notification for Purchase Tender Approval" />
                                <div class="text-muted">
                                    If is checked , it will be send an Whatsapp notification to all Purchase Tender Approver
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-4 o_setting_box" attrs="{'invisible': [('pt_expiry_notification','=',False)]}">
                            <div class="o_setting_left_pane" />
                            <div class="o_setting_right_pane">
                                <label for="pt_enter_after_first_notify" string="Notify After Expiry Date" class="o_light_label" />
                                <field class="col-2" name="pt_enter_after_first_notify" />
                            </div>
                        </div>

                        <div class="col-12 col-lg-4 o_setting_box" attrs="{'invisible': [('pt_expiry_notification','=',False)]}">
                            <div class="o_setting_left_pane" />
                            <div class="o_setting_right_pane">
                                <label for="pt_enter_before_first_notify" string="Notify Before Expiry Date" class="o_light_label" />
                                <field class="col-2" name="pt_enter_before_first_notify" />
                            </div>
                        </div>

                        <div class="col-12 col-lg-4 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_price_ratting_rfq_tender" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_price_ratting_rfq_tender" string="Price Rating RFQ Tender" />
                                <div class="text-muted">
                                    If it is checked, the price rating will be displayed on the RFQ Tender Portal.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    <h2>Purchase Blanket Order</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-4 o_setting_box" attrs="{'invisible': [('is_good_services_order','=',True)]}">
                            <div class="o_setting_left_pane" />
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Purchase Blanket Expiry Date</span>
                                <div class="text-muted">
                                    <field name="bo_expiry_date" /> Days
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-4 o_setting_box" attrs="{'invisible': [('is_good_services_order','=',False)]}">
                            <div class="o_setting_left_pane" />
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Blanket Goods Order Expiry Date</span>
                                <div class="text-muted">
                                    <field name="bo_goods_order_expiry_date" /> Days
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-4 o_setting_box" attrs="{'invisible': [('is_good_services_order','=',False)]}">
                            <div class="o_setting_left_pane" />
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Blanket Services Order Expiry Date</span>
                                <div class="text-muted">
                                    <field name="bo_service_order_expiry_date" /> Days
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-4 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_email_notification_bo" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_email_notification_bo" string="Email Notification for Blanket Order Approval" />
                                <div class="text-muted">
                                    If is checked , it will be send an Email notification to all Blanket Order Approver
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-4 o_setting_box" attrs="{'invisible': [('bo_expiry_notification','=',False)]}">
                            <div class="o_setting_left_pane">
                                <field name="bo_on_date_notify" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="bo_on_date_notify" string="On Expiry Date Notification" />
                                <div class="text-muted">
                                    On Document Expiry Date Notification
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-4 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="bo_expiry_notification" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="bo_expiry_notification" string="Document Expiry Notification" />
                                <div class="text-muted">
                                    Set Mail Document Expiry Notification
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-4 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_whatsapp_notification_bo" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_whatsapp_notification_bo" string="Whatsapp Notification for Blanket Order Approval" />
                                <div class="text-muted">
                                    If is checked , it will be send an Whatsapp notification to all Blanket Order Approver
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-4 o_setting_box" attrs="{'invisible': [('bo_expiry_notification','=',False)]}">
                            <div class="o_setting_left_pane" />
                            <div class="o_setting_right_pane">
                                <label for="bo_enter_after_first_notify" string="Notify After Expiry Date" class="o_light_label" />
                                <field class="col-2" name="bo_enter_after_first_notify" />
                            </div>
                        </div>
                        <div class="col-12 col-lg-4 o_setting_box" attrs="{'invisible': [('bo_expiry_notification','=',False)]}">
                            <div class="o_setting_left_pane" />
                            <div class="o_setting_right_pane">
                                <label for="bo_enter_before_first_notify" string="Notify Before Expiry Date" class="o_light_label" />
                                <field class="col-2" name="bo_enter_before_first_notify" />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    
</odoo>
