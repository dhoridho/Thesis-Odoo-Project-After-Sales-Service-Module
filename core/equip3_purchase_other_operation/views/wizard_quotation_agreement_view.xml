<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="wizard_quotation_agreement_form" model="ir.ui.view">
		<field name="name">wizard.quotation.agreement.form</field>
		<field name="model">wizard.quotation.agreement</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<field name="company_id" invisible="1"/>
					<field name="agreement_id" invisible="1"/>
					<field name="partner_ids" widget="many2many_tags" required="True"
						   domain="[('active', '=', True), ('state', '=', 'approved'), '|', ('company_id', '=', False), ('company_id', '=', company_id)]"/>
				</group>
				<footer>
					<button string="Proceed" type="object" name="action_new_quotation_wizard" class="oe_highlight"/>
					<button string="Cancel" class="oe_link" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>
</odoo>