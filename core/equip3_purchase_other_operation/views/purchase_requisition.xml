<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- purchase.requisition inherit form view -->
    <record id="purchase_requisition_view_form_inherit" model="ir.ui.view">
        <field name="name">purchase.requisition.inherit.view.form</field>
        <field name="model">purchase.requisition</field>
        <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/div[@name='button_box']/button[@name='%(purchase_requisition.action_purchase_requisition_list)d']" position="attributes">
                <attribute name="icon">o-hm-smart-all-selected-orders</attribute>
            </xpath>
            <field name="user_id" position="attributes">
                <attribute name="options">{'no_create':True,
                                           'no_create_edit':True}</attribute>
            </field>
            <field name="vendor_id" position="attributes">
                <attribute name="options">{'no_create':True,
                                           'no_create_edit':True}</attribute>
            </field>
            <field name="currency_id" position="attributes">
                <attribute name="options">{'no_create':True,
                                           'no_create_edit':True}</attribute>
            </field>
            <field name="branch_id" position="attributes">
                <attribute name="options">{'no_create':True,
                                           'no_create_edit':True}</attribute>
            </field>
            <field name="account_tag_ids" position="attributes">
                <attribute name="options">{'no_create':True,
                                           'no_create_edit':True}</attribute>
            </field>
            <field name="destination_warehouse" position="attributes">
                <attribute name="options">{'no_create':True,
                                           'no_create_edit':True}</attribute>
            </field>
            <xpath expr="//field[@name='line_ids']/tree/field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_create':True,
                                           'no_create_edit':True}</attribute>
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree/field[@name='product_uom_id']" position="attributes">
                <attribute name="options">{'no_create':True,
                                           'no_create_edit':True}</attribute>
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree/field[@name='account_tag_ids']" position="attributes">
                <attribute name="options">{'no_create':True,
                                           'no_create_edit':True}</attribute>
            </xpath>
        </field>
    </record>
</odoo>