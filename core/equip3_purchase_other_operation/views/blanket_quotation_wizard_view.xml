<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="blanket_quotation_form" model="ir.ui.view">
            <field name="name">blanket.quotation.wizard</field>
            <field name="model">blanket.quotation</field>
            <field name="arch" type="xml">
                <form string="Create Purchase Order">
                    <field name="wiz_line_ids">
                        <tree editable="top" delete="0" create="0">
                            <field name="bq_id" invisible='1'/>
                            <field name="product_id" readonly="1" force_save="1"/>
                            <field name="vendor_id" required='1' readonly="1" force_save="1"/>
                            <field name="remaining_quantity" readonly="1" force_save="1"/>
                            <field name="blanket_order_line_id" invisible='1'/>
                            <field name="new_quatation_quantity"/>
                            <field name="unit_of_measure_id" invisible='1'/>
                            <field name="unit_price" invisible='1'/>
                            <field name="subtotal" invisible='1'/>
                        </tree>
                    </field>
                    <footer>
                        <button name="create_quatation" string="Create Quotation" type="object" class="oe_highlight"/>
                        <button string="Close Window" class="bin-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="blanket_quotation_wizard" model="ir.actions.act_window">
            <field name="name">Create Purchase Order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">blanket.quotation</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="blanket_quotation_form"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>