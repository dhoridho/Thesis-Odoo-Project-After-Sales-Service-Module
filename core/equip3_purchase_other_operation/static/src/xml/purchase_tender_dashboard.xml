<?xml version="1.0" encoding="utf-8" ?>
<templates>

    <t t-name="PurchaseTenderDashboard">
        <div class="o_cp_controller purchase_tender_dashboard">
            <div class="text-center mt-5 header">
                <h1>Purchase Tender Dashboard</h1>
            </div>
        </div>
    </t>

    <t t-name="PurchaseTenderDashboardContent">
        <div class="o_action ks_dashboard_ninja d-flex flex-column">
            <div class="ks_dashboard_main_content" id="ks_dash1">
                <div class="ks_dashboard_item_content grid-stack ks_dashboard_items_list m-3 grid-stack-instance-7933 grid-stack-static grid-stack-animate" data-gs-width="36" gs-static="true" gs-current-row="24" style="height: 150px;">
                    <div class="total_tender ks_item_click grid-stack-item ui-draggable-disabled ui-resizable-disabled" gs-x="0" gs-y="0" gs-w="4" gs-h="2" gs-min-w="2" gs-min-h="2" gs-max-h="2" gs-id="493">
                        <div id="493" class="ks_dashboarditem_id ks_dashboard_item_l2 ks_dashboard_item_hover grid-stack-item-content" style="background-color:rgba(255,255,255,0.99);color : rgba(0,0,0,0.99);width:95%;">
                            <div class="ks_dashboard_item_main_body_l2">
                                <div class="ks_dashboard_item_name_l2" title="Request for Quotations" style="margin-bottom:unset;margin-top:25px;">
                                    Total Tender
                                </div>
                                <div class="ks_dashboard_item_domain_count_l2" style="margin-top:unset;">
                                    <span t-esc="total_tender"/>
                                </div>
                            </div>
                            <div class="ks_dashboard_icon_l2">
                                <img src="/equip3_purchase_other_operation/static/src/img/total_tender.png"/>
                            </div>
                        </div>
                    </div>
                    <div class="active_tender ks_item_click grid-stack-item ui-draggable-disabled ui-resizable-disabled" gs-x="4" gs-y="0" gs-w="4" gs-h="2" gs-min-w="2" gs-min-h="2" gs-max-h="2" gs-id="494">
                        <div id="494" class="ks_dashboarditem_id ks_dashboard_item_l2 ks_dashboard_item_hover grid-stack-item-content" style="background-color:rgba(255,255,255,0.99);color : rgba(0,0,0,0.99);width:95%;">
                            <div class="ks_dashboard_item_main_body_l2">
                                <div class="ks_dashboard_item_name_l2" title="Request for Quotations" style="margin-bottom:unset;margin-top:25px;">
                                    Active Tender
                                </div>
                                <div class="ks_dashboard_item_domain_count_l2" style="margin-top:unset;">
                                    <span t-esc="active_tender"/>
                                </div>
                            </div>
                            <div class="ks_dashboard_icon_l2">
                                <img src="/equip3_purchase_other_operation/static/src/img/active_tender.png"/>
                            </div>
                        </div>
                    </div>
                    <div class="today_tender ks_item_click grid-stack-item ui-draggable-disabled ui-resizable-disabled" gs-x="8" gs-y="0" gs-w="4" gs-h="2" gs-min-w="2" gs-min-h="2" gs-max-h="2" gs-id="495">
                        <div id="495" class="ks_dashboarditem_id ks_dashboard_item_l2 ks_dashboard_item_hover grid-stack-item-content" style="background-color:rgba(255,255,255,0.99);color : rgba(0,0,0,0.99);width:95%;">
                            <div class="ks_dashboard_item_main_body_l2">
                                <div class="ks_dashboard_item_name_l2" title="Request for Quotations" style="margin-bottom:unset;margin-top:25px;">
                                    Today's Tender
                                </div>
                                <div class="ks_dashboard_item_domain_count_l2" style="margin-top:unset;">
                                    <span t-esc="today_tender"/>
                                </div>
                            </div>
                            <div class="ks_dashboard_icon_l2">
                                <img src="/equip3_purchase_other_operation/static/src/img/today_tender.png"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-left ml-15 heading_1">
            <h1><span><b>Notification</b> of Submission of Documents</span></h1>
        </div>
        <div class="second-table mb-4 mt-5 ml-15 mr-5">
            <t t-foreach="notifications" t-as="notification">
                <div class="cards mb-3">
                    <span class="title" t-esc="notification.name"/>
                    <br/>
                    <span class="details" t-esc="notification.message"/>
                </div>
            </t>
        </div>
    </t>

</templates>