<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="email_template_approval_matrix" model="mail.template">
        <field name="name">Approval Matrix</field>
        <field name="email_from">${ctx.get('email_from')}</field>
        <field name="email_to">${ctx.get('email_to')}</field>
        <field name="subject">Request For Approval</field>
        <field name="model_id" ref="equip3_purchase_other_operation.model_purchase_requisition"/>
        <field name="auto_delete" eval="True"/>
        <field name="body_html"><![CDATA[
            <p>Dear ${ctx.get('approver_name')},</p>
            <p>Here is reminder that the blanket order ${object.name} is waiting for your approval. Please 
                approved before agreement deadline on ${ctx.get('date_end')}.
            </p>
            <div style = "margin: 16px;">
                <a href=${ctx.get('url')} style = "padding: 5px 10px; font-size: 12px; line-height: 18px;
                 color: #FFFFFF; border-color:#875A7B; text-decoration: none; display: inline-block; 
                 margin-bottom: 0px; font-weight: 400; text-align: center; vertical-align: middle; 
                 cursor: pointer; white-space: nowrap; background-image: none; background-color: #875A7B;
                 border: 1px solid #875A7B; border-radius:3px">${object.name}</a></div>
            <p>If you have any questions, please do not hesitate to contact us.</p>
            <p>Best regards</p>
            ]]></field>
    </record>

    <record id="email_template_approval_matrix_approve" model="mail.template">
        <field name="name">Approval Matrix Approve</field>
        <field name="email_from">${ctx.get('email_from')}</field>
        <field name="email_to">${ctx.get('email_to')}</field>
        <field name="subject">Request For Approve</field>
        <field name="model_id" ref="equip3_purchase_other_operation.model_purchase_requisition"/>
        <field name="auto_delete" eval="True"/>
        <field name="body_html"><![CDATA[
            <p>Dear ${ctx.get('user_name')},</p>
            <p>Here is reminder that the blanket order ${object.name} is waiting for your approval. The previous approver is ${ctx.get('approver_name')}. Please 
                approved before agreement deadline on ${ctx.get('date_end')}.
            </p>
            <div style = "margin: 16px;">
                <a href=${ctx.get('url')} style = "padding: 5px 10px; font-size: 12px; line-height: 18px;
                 color: #FFFFFF; border-color:#875A7B; text-decoration: none; display: inline-block; 
                 margin-bottom: 0px; font-weight: 400; text-align: center; vertical-align: middle; 
                 cursor: pointer; white-space: nowrap; background-image: none; background-color: #875A7B;
                 border: 1px solid #875A7B; border-radius:3px">${object.name}</a></div>
            <p>If you have any questions, please do not hesitate to contact us.</p>
            <p>Best regards</p>
            ]]></field>
    </record>

</odoo>
