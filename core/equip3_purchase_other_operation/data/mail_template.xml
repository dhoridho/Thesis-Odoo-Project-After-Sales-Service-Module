<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="0">
		<record id="email_template_pt_expiry_reminder" model="mail.template">
			<field name="name">Purchase Tender: Expiry Reminder - Before</field>
			<field name="model_id" ref="equip3_purchase_other_operation.model_purchase_agreement"/>
			<field name="email_from">${(object.company_id.email) |safe}</field>
			<field name="subject">${object.company_id.name} Purchase Tender (Ref ${object.name or 'n/a' })</field>
			<field name="email_to" >${object.sh_purchase_user_id.email}</field>
			<field name="body_html" type="html">
				<div style="margin: 0px; padding: 0px;">
					<p style="margin: 0px; padding: 0px; font-size: 13px;">
						Dear ${object.sh_purchase_user_id.name}
						<br/><br/>
						Here is reminder that the purchase Tender <strong>${object.name}</strong>
						% if object.state == 'bid_selection':
							bid selection period will be expired in 
							% if object.sh_bid_selection_agreement_deadline:
							<strong>${object.sh_bid_selection_agreement_deadline}</strong>.
							% else:
							<strong>undefined</strong>.
							% endif
						% elif object.state == 'bid_submission':
							bid submission period will be expired in  
							% if object.sh_bid_agreement_deadline:
							<strong>${object.sh_bid_agreement_deadline}</strong>.
							% else:
							<strong>undefined</strong>.
							% endif
						% else:
							will be expired in  
							% if object.sh_agreement_deadline:
							<strong>${object.sh_agreement_deadline}</strong>.
							% else:
							<strong>undefined</strong>.
							% endif
						% endif
						it’s
						% if object.days_left:
						<strong>${object.days_left}</strong>
						% else:
						<strong>undefined</strong>.
						% endif
						days left.
						Click link below to go to the Purchase Tender
						<br/><br/>
						<div>
							<div style="display: inline-block; margin: 15px 0px; text-align: center;">
								<a href="${object.get_full_url()}" target="_blank" style="padding: 5px 10px; color: #ffffff; text-decoration: none; background-color: #875a7b; border: 1px solid #875a7b; border-radius: 3px;">
									View Purchase Tender
								</a>
							</div>
						</div>
						<br/>
						If you have any questions, please do not hesitate to contact us.
						<br/>
						Best regards,
					</p>
				</div></field>
		</record>


		<record id="email_template_pt_expiry_reminder_after" model="mail.template">
			<field name="name">Purchase Tender: Expiry Reminder - After</field>
			<field name="model_id" ref="equip3_purchase_other_operation.model_purchase_agreement"/>
			<field name="email_from">${(object.company_id.email) |safe}</field>
			<field name="subject">${object.company_id.name} Purchase Tender (Ref ${object.name or 'n/a' })</field>
			<field name="email_to" >${object.sh_purchase_user_id.email}</field>
			<field name="body_html" type="html">
				<div style="margin: 0px; padding: 0px;">
					<p style="margin: 0px; padding: 0px; font-size: 13px;">
						Dear ${object.sh_purchase_user_id.name}
						<br/><br/>
						Here is information that the purchase Tender <strong>${object.name}</strong>
						has been expired since
						% if object.state == 'bid_submission':
							% if object.sh_bid_agreement_deadline:
							<strong>${object.sh_bid_agreement_deadline}</strong>.
							% else:
							<strong>undefined</strong>.
							% endif
						% elif object.state == 'bid_selection':
							% if object.sh_bid_selection_agreement_deadline:
							<strong>${object.sh_bid_selection_agreement_deadline}</strong>.
							% else:
							<strong>undefined</strong>.
							% endif
						% else:
							% if object.sh_agreement_deadline:
							<strong>${object.sh_agreement_deadline}</strong>.
							% else:
							<strong>undefined</strong>.
							% endif
						% endif
						<br/><br/>
						<div style="display: inline-block; margin: 15px 0px; text-align: center;">
							<a href="${object.get_full_url()}" target="_blank" style="padding: 5px 10px; color: #ffffff; text-decoration: none; background-color: #875a7b; border: 1px solid #875a7b; border-radius: 3px;">
								${object.name}
							</a>
						</div>
						<br/><br/>
						If you have any questions, please do not hesitate to contact us.
						<br/>
						Best regards,
					</p>
				</div>
			</field>
		</record>

