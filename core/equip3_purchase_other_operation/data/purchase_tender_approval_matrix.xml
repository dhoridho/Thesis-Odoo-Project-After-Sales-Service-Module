<odoo>

    <record id="email_template_purchase_tender_approval_approved" model="mail.template">
        <field name="name">Reminder for Purchase Tender Approval</field>
        <field name="email_from">${ctx.get('email_from')}</field>
        <field name="email_to">${ctx.get('email_to')}</field>
        <field name="subject">Reminder for Purchase Tender has been Approved</field>
        <field name="model_id" ref="equip3_purchase_other_operation.model_purchase_agreement"/>
        <field name="auto_delete" eval="True"/>
        <field name="body_html"><![CDATA[
                <p>Date: ${ctx.get('date')}</p>
                <p>Subject : Reminder for Purchase Tender Approval has been Approved</p>
                <p></p>
                <p>Dear ${object.partner_id.name},</p>
                <p>Based on the Purchase Tender Approval Request ${object.name}. Your Purchase Tender approval request has been Approved.</p>
                <p></p>
                <p>You can confirm or cancel the Quotation by clicking this button:</p>
                <div style = "margin: 16px;">
                    <a href=${ctx.get('url')} style = "padding: 5px 10px; font-size: 12px; line-height: 18px;
                     color: #FFFFFF; border-color:#875A7B; text-decoration: none; display: inline-block;
                     margin-bottom: 0px; font-weight: 400; text-align: center; vertical-align: middle;
                     cursor: pointer; white-space: nowrap; background-image: none; background-color: #875A7B;
                     border: 1px solid #875A7B; border-radius:3px">${object.name}</a></div>
                </br>
                <p>Thank you.</p>
                ]]></field>
    </record>

