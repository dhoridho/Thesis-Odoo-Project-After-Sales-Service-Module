    <template id="tender_success">
        <t t-call="website.layout">
            <div class="container mt8">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        <div class="alert alert-success text-center">
                            <p>Your review submitted successfully.</p>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

