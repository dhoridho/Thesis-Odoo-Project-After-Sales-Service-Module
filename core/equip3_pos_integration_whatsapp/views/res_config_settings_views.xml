<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="equip3_pos_general.inherit_pos_res_config_settings_view_form" />
        <field name="priority">23</field>
        <field name="arch" type="xml">
          	<xpath expr="//div[@name='box_receipt_setting_container']" position="inside">

                    <div class="col-12 col-lg-6 o_setting_box box_receipt_setting_container_left" style="display: flex;">
                        <div class="o_setting_left_pane" style="padding-top: 5px;">
                            <field name="pos_whatsapp_notification_for_receipt" nolabel="1"  />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="pos_whatsapp_notification_for_receipt" string="Whatsapp Notification for Receipt"/>
                            <div class="text-muted">If this is checked, It will send a whatsapp message containing receipt to customer</div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box box_receipt_setting_container_right" style="display: flex;">
                        <div class="o_setting_left_pane" style="padding-top: 5px;">
                            <field name="pos_whatsapp_auto_sent_receipt_to_member" nolabel="1"  />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="pos_whatsapp_auto_sent_receipt_to_member" string="Auto Sent Receipt to Member"/>
                            <div class="text-muted">If this is checked, It will auto send a whatsapp message containing receipt to Member after complete payment</div>
                        </div>
                    </div>
              
             </xpath> 
        </field>
    </record>

</odoo>