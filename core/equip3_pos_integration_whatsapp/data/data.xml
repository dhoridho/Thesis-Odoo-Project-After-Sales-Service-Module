<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="template_for_send_receipt_via_whatsapp" model="mail.template">
        <field name="name">POS: Template for Send Message via Whatsapp</field>
        <field name="email_from">${ctx.get('email_from')}</field>
        <field name="email_to">${ctx.get('email_to')}</field>
        <field name="subject">Notification</field>
        <field name="model_id" ref="point_of_sale.model_pos_order"/>
        <field name="auto_delete" eval="True"/>
        <field name="body_html"><![CDATA[
            Dear ${customer},${br}
            We've received your payment for order ${order_number}. Here's your e-receipt on ${day}, ${date} with total ${grand_total}.
        ]]></field>
    </record> 

</odoo>
