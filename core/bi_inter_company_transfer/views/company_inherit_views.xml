<?xml version="1.0" encoding="utf-8"?>
<odoo> 
	
   <record id="res_company_inherit_form" model="ir.ui.view">
		<field name="name">res.company.form.inherit.stock</field>
		<field name="model">res.company</field>
		<field name="priority" eval="30"/>
		<field name="inherit_id" ref="base.view_company_form" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='parent_id']" position="after">

				<field name="intercompany_warehouse_id" domain="[('company_id', '=', id)]" options="{'no_open':True,'no_create':1,'no_create_edit':1}"/>
				
			</xpath>
		</field>
	</record>

</odoo>