<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="0">
  
  	<record id="izi_sale_channel.tree_sale_channel" model="ir.ui.view">
		<field name="name">Sale Channel Tree View</field>
		<field name="model">sale.channel</field>
		<field name="arch" type="xml">
			<tree string="Sale Channel">
				<field name="code" />
				<field name="complete_name"/>
			</tree>
		</field>
	</record>

	<record id="izi_sale_channel.form_sale_channel"
		model="ir.ui.view">
		<field name="name">Sale Channel Form View</field>
    	<field name="model">sale.channel</field>
		<field name="arch" type="xml">
			<form string="Sale Channel">
				<sheet>
					<div class="oe_title">
						<label for="name" class="oe_edit_only" />
						<h1>
							<field name="name" />
						</h1>
					</div>
					<group>
						<group>
							<field name="code" />
							<field name="parent_id"/>
							<field name="child_ids" invisible="1"/>
							<field name="company_id" />
						</group>
						<group>
							<field name="analytic_account_id"/>
							<field name="analytic_tag_id"/>
						</group>
					</group>
					<group name="sale" string="Sales Confirmation">
						<group>
							<field name="confirm_sale_auto_post_invoice"/>
							<field name="confirm_sale_without_picking"/>
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>

  </data>
</odoo>