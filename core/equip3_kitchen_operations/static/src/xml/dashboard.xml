<?xml version="1.0" encoding="UTF-8"?>

<templates id="template" xml:space="preserve">
	<t t-name="equip3_kitchen_operations.kitchen_dashboard_header">
		<t t-if="values['has_access']">
			<div class="o_kitchen_container">
				<table class="o_kitchen_table">
					<tbody>
						<tr>
							<td class="o_td_kitchen_label">
								<label class="o_form_kitchen_label">Period</label>
							</td>
							<td><input class="o_kitchen_input o_kitchen_dashboard_value" type="date" name="from_date" t-att-value="values['context']['from_date']"/></td>
							<td style="text-align: center; font-weight: bold;">to</td>
							<td><input class="o_kitchen_input o_kitchen_dashboard_value" type="date" name="to_date" t-att-value="values['context']['to_date']"/></td>
						</tr>
						<tr>
							<td class="o_td_kitchen_label">
								<label class="o_form_kitchen_label">Warehouse</label>
							</td>
							<td colspan="3">
								<select class="o_kitchen_input o_kitchen_dashboard_value" name="warehouse" t-att-test="values['context']['warehouse']">
									<t t-if="values['context']['warehouse'] == false">
										<option t-att-value="'false'" t-attf-selected="selected">
											Please Select Warehouse
										</option>
									</t>
									<t t-foreach="values['warehouses']" t-as="warehouse">
										<t t-if="warehouse == values['context']['warehouse']">
											<option t-att-value="warehouse" t-attf-selected="selected">
												<t t-esc="warehouse_value"/>
											</option>
										</t>
										<t t-else="">
											<option t-att-value="warehouse">
												<t t-esc="warehouse_value"/>
											</option>
										</t>
									</t>
								</select>
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		</t>
	</t>
</templates>