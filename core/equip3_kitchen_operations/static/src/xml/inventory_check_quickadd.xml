<?xml version="1.0" encoding="UTF-8"?>

<templates id="template" xml:space="preserve">
	<t t-name="equip3_kitchen_operations.dashboard_list_header">
		<div class="o_kitchen_container">
			<table class="o_kitchen_table">
				<tbody>
					<tr>
						<td class="o_td_kitchen_label">
							<label class="o_form_kitchen_label">Period</label>
						</td>
						<td style="width: 100%;">
							<table style="width: 100%;">
								<tbody>
									<tr>
										<td><input class="o_kitchen_input o_kitchen_dashboard" type="date" name="kitchen_dashboard_date_start" t-att-value="values['date_start']"/></td>
										<td style="text-align: center; font-weight: bold;">to</td>
										<td><input class="o_kitchen_input o_kitchen_dashboard" type="date" name="kitchen_dashboard_date_end" t-att-value="values['date_end']"/></td>
									</tr>
								</tbody>
							</table>
						</td>
					</tr>
					<tr>
						<td class="o_td_kitchen_label">
							<label class="o_form_kitchen_label">Warehouse</label>
						</td>
						<td style="width: 100%;">
							<select class="o_kitchen_input o_kitchen_dashboard" name="kitchen_dashboard_warehouse_id">
								<t t-if="'false' in values['warehouses']">
									<option t-att-value="'false'" t-attf-selected="selected">
										<t t-esc="values['warehouses']['false']"/>
									</option>
								</t>
								<t t-foreach="values['warehouses']" t-as="warehouse_id">
									<t t-if="warehouse_id != 'false'">
										<t t-if="warehouse_id == values['warehouse_id']">
											<option t-att-value="warehouse_id" t-attf-selected="selected">
												<t t-esc="warehouse_id_value"/>
											</option>
										</t>
										<t t-else="">
											<option t-att-value="warehouse_id">
												<t t-esc="warehouse_id_value"/>
											</option>
										</t>
									</t>
								</t>
							</select>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</t>
</templates>