<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_kitchen_safety_stock_tree" model="ir.ui.view">
		<field name="name">view.kitchen.safety.stock.tree</field>
		<field name="model">kitchen.safety.stock</field>
		<field name="arch" type="xml">
			<tree string="Safety Stock Management">
				<field name="name"/>
				<field name="warehouse_id"/>
				<field name="branch_id" optional="hide"/>
				<field name="company_id" invisible="1"/>
			</tree>
		</field>
	</record>

	<record id="view_kitchen_safety_stock_form" model="ir.ui.view">
		<field name="name">view.kitchen.safety.stock.form</field>
		<field name="model">kitchen.safety.stock</field>
		<field name="arch" type="xml">
			<form string="Safety Stock Management">
				<sheet>
					<group>
						<group>
							<field name="name"/>
							<field name="warehouse_id" options="{'no_create_edit': True, 'no_create': True}"/>
						</group>
						<group>
							<field name="company_id" invisible="1"/>
							<field name="is_branch_required" invisible="1"/>
							<field name="branch_id" options="{'no_create_edit': True, 'no_create': True}" attrs="{'required': [('is_branch_required', '=', True)]}"/>
						</group>
					</group>
					<notebook>
						<page string="Products" name="kitchen_safety_stock_line">
							<field name="stock_line_ids">
								<tree string="Products" editable="bottom">
									<field name="stock_id" invisible="1"/>
									<field name="product_id" options="{'no_create_edit': True, 'no_create': True}"/>
									<field name="product_qty"/>
								</tree>
							</field>
						</page>
					</notebook>
				</sheet>
			</form>
		</field>
	</record>

	<record id="action_view_kitchen_safety_stock_management" model="ir.actions.act_window">
		<field name="name">Safety Stock Management</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">kitchen.safety.stock</field>
		<field name="view_mode">tree,form</field>
		<field name="help" type="html">
		  <p class="o_view_nocontent_smiling_face">
			Create New Safety Stock Management
		  </p>
		</field>
	</record>
	
</odoo>