<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <record id="stock_picking_inherit_view_tree_state" model="ir.ui.view">
        <field name="name">Stock Picking Tree Change State Color</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="replace">
                <field name="state" widget="badge" 
                    decoration-success="state == 'done'" 
                    decoration-secondary="state == 'draft'"
                    decoration-muted="state == 'confirmed'"
					decoration-success2="state == 'assigned'"
                    decoration-danger3="state == 'cancel'"/>
            </xpath>
        </field>
    </record>

	<record id="view_picking_form_kitchen" model="ir.ui.view">
		<field name="name">view.picking.form.kitchen</field>
		<field name="model">stock.picking</field>
		<field name="inherit_id" ref="stock.view_picking_form"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='origin']" position="after">
				<field name="kitchen_id" invisible="1"/>
				<field name="is_readonly_origin" invisible="1"/>
			</xpath>

			<xpath expr="//field[@name='origin']" position="attributes">
				<attribute name="attrs">{'readonly': [('is_readonly_origin', '=', True)]}</attribute>
				<attribute name="force_save">1</attribute>
			</xpath>
		</field>
	</record>
</odoo>