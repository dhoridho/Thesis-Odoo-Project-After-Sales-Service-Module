<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_product_template_central_kitchen" model="ir.ui.view">
		<field name="name">view.product.template.central.kitchen</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_form_view"/>
		<field name="arch" type="xml">
			<xpath expr="//notebook" position="inside">
				<page string="Kitchen" name="central_kitchen_tab">
					<group>
						<field name="produceable_in_kitchen"/>
					</group>
				</page>
			</xpath>
		</field>
	</record>
		
	<record id="view_product_kitchen_dashboard" model="ir.ui.view">
		<field name="name">view.product.kitchen.dashboard</field>
		<field name="model">product.product</field>
		<field name="priority" eval="500"/>
		<field name="arch" type="xml">
			<tree string="Kitchen Production" create="false" js_class="kitchen_dashboard">
				<field name="default_code" readonly="1"/>
				<field name="name" readonly="1" string="Product"/>
				<field name="tmp_safety_stock_qty" string="Safety Stock"/>
				<field name="tmp_qty_available" string="Quantity On Hand"/>
				<field name="tmp_incoming_qty" string="Forecasted Incoming"/>
				<field name="tmp_outgoing_qty" string="Forcasted Outgoing"/>
				<field name="uom_id" readonly="1" string="UoM"/>
				<field name="tmp_to_produce_qty" string="To Produce"/>
				<button name="action_produce" type="object" string="Produce" class="btn-primary" context="{'default_finished_qty': tmp_to_produce_qty}"/>
			</tree>
		</field>
	</record>
</odoo>