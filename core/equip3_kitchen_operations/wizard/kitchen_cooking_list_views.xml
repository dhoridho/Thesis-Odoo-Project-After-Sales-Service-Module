<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_kitchen_cooking_list" model="ir.ui.view">
		<field name="name">view.kitchen.cooking.list</field>
		<field name="model">kitchen.cooking.list</field>
		<field name="arch" type="xml">
			<form string="Cooking List">
				<sheet>
					<group>
						<label for="from_date" string="Period"/>
						<div class="o_row no-gutters d-flex">
							<div class="o_row">
								<field name="from_date"/>
							</div>
							To
							<field name="to_date"/>
						</div>
						<field name="warehouse_id" options="{'no_create_edit': True, 'no_create': True}"/>
						<field name="company_id" invisible="1"/>
					</group>
					<notebook>
						<page string="Product Lines">
							<field name="product_ids" readonly="1" force_save="1">
								<tree string="Product Lines" create="false" delete="false">
									<field name="list_id" invisible="1"/>
									<field name="product_id"/>
									<field name="uom_id"/>
									<field name="inventory_quantity" width="1"/>
									<field name="outgoing_qty" width="1"/>
									<field name="to_produce_qty" width="1"/>
								</tree>
							</field>
						</page>
					</notebook>
				</sheet>
				<footer>
					<button name="action_print" type="object" string="Print" class="oe_highlight"/>
				</footer>
			</form>
		</field>
	</record>

	<record id="action_view_kitchen_cooking_list" model="ir.actions.act_window">
		<field name="name">Cooking List</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">kitchen.cooking.list</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>

	<menuitem 
		id="menu_view_kitchen_cooking_list"
		name="Cooking List"
		parent="menu_kitchen_operation"
		action="action_view_kitchen_cooking_list"
		sequence="0"/>
</odoo>