<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kiosk_attendance_token_tree_view" model="ir.ui.view">
            <field name="name">kiosk.attendance.token.tree.view</field>
            <field name="model">kiosk.attendance.token.log</field>
            <field name="arch" type="xml">
                <tree string="Kiosk Attendance Token" create="0">
                    <field name="token"/>
                    <field name="user_id"/>
                    <field name="is_used"/>
                    <field name="expired_date"/>
                </tree>
            </field>
        </record>

        <record id="action_kiosk_attendance_token" model="ir.actions.act_window">
            <field name="name">Kiosk Attendance Token</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kiosk.attendance.token.log</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="menu_kiosk_attendance_token" 
            name="Kiosk Attendance Token" 
            parent="equip3_hr_basic_custom_menu.menu_hr_attendance_configuration" 
            groups="base.group_no_one" 
            sequence="10"
            action="action_kiosk_attendance_token"/>
    </data>
</odoo>