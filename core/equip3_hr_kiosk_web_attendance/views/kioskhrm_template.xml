<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_kiosk_hrm" name="Kiosk HRM">
        <t t-call="website.layout">
            <style>
                .o_hr_attendance_kiosk_backdrop {
                    position: absolute;
                    top: 0;
                    left: 0;
                    bottom: 0;
                    right: 0;
                }
                .o_hr_attendance_kiosk_hrm_mode_container {
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    position: absolute;
                    top: 0;
                    right: 0;
                    left: 0;
                    bottom: 0;
                }
                @media (min-width: 768px) {
                    .o_hr_attendance_kiosk_mode {
                        padding: 2em 4em;
                        max-width: 550px;
                        width: 100%;
                        border-radius: 0.2em;
                        font-size: 1.2em;
                        animation: fadeInDownSmall .3s;
                    }
                }
                .o_hr_attendance_kiosk_mode {
                    text-align: center;
                    position: relative;
                    background-color: rgba(255, 255, 255, 0.9);
                    box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16), 0 3px 6px rgba(0, 0, 0, 0.23);
                }
                h1 {
                    font-family: 'Lato';
                    font-size: 2em !important;
                    font-weight: bold !important;
                }
                .o_hr_attendance_kiosk_mode img.o_hr_attendance_kiosk_company_image {
                    overflow: hidden;
                    margin: 1rem 0 2rem;
                    width: 200px;
                }
                .btn-primary {
                    box-shadow: none !important;
                    background-color: var(--o-theme-btn-primary-bgcolor) !important;
                    color: var(--o-theme-btn-primary-color) !important;
                    border: 1px solid var(--o-theme-btn-primary-bgcolor) !important;
                }
                #top, .o_portal, .o_main_navbar {
                    display: none; 
                }
            </style>
            <div class="o_hr_attendance_kiosk_hrm_mode_container o_home_menu_background">
                <span class="o_hr_attendance_kiosk_backdrop"/>
                <div class="o_hr_attendance_kiosk_mode">
                    <t t-if="employee_attendance">
                        <span id="token" style="display:none;"><t t-esc="token"/></span>
                        <span id="lat" style="display:none;"><t t-esc="lat"/></span>
                        <span id="long" style="display:none;"><t t-esc="long"/></span>
                        <h1><small>Welcome to</small> <t t-esc="company_name"/></h1>
                        <img t-attf-src="{{company_image_url}}" alt="Company Logo" class="o_hr_attendance_kiosk_company_image"/>
                        <div class="row o_hr_attendance_kiosk_welcome_row">
                            <div class="col-sm-12">
                                <button class="o_hr_attendance_button_employees btn btn-primary mb16">
                                    <div class="mb16 mt16">Sign In / Sign Out</div>
                                </button>
                            </div>
                        </div>
                    </t>
                    <t t-else="">
                        <div class="alert alert-warning" role="alert">Your Kiosk’s Token not Match! You aren’t able to doing CheckIn/CheckOut Right Now!</div> 
                    </t>
                </div>
            </div>
        </t>
    </template>

    <template id="portal_kiosk_hrm_success" name="Kiosk HRM">
        <t t-call="website.layout">
            <style>
                .o_hr_attendance_kiosk_mode_success_container {
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    position: absolute;
                    top: 0;
                    right: 0;
                    left: 0;
                    bottom: 0;
                }
                .o_hr_attendance_kiosk_backdrop {
                    position: absolute;
                    top: 0;
                    left: 0;
                    bottom: 0;
                    right: 0;
                }
                @media (min-width: 768px) {
                    .o_hr_attendance_kiosk_mode {
                        padding: 2em 4em;
                        max-width: 550px;
                        width: 100%;
                        border-radius: 0.2em;
                        font-size: 1.2em;
                        animation: fadeInDownSmall .3s;
                    }
                    .o_hr_attendance_kiosk_mode .o_hr_attendance_user_badge {
                        margin: 0;
                        height: 90px;
                        border-radius: 0.2em 0.2em 0 0;
                        border-top: 1px solid rgba(255, 255, 255, 0.2);
                        position: absolute;
                        top: auto;
                        left: 0;
                        bottom: 100%;
                        right: 0;
                        transform: translateY(3px);
                    }
                    .o_hr_attendance_kiosk_mode .o_hr_attendance_user_badge img {
                        width: 80px;
                        height: 80px;
                        transform: translateX(-50%) translateY(35%);
                        position: absolute;
                        top: auto;
                        left: auto;
                        bottom: 0;
                        right: auto;
                    }
                }
                .o_hr_attendance_kiosk_mode {
                    text-align: center;
                    position: relative;
                    background-color: rgba(255, 255, 255, 0.9);
                    box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16), 0 3px 6px rgba(0, 0, 0, 0.23);
                }
                .o_hr_attendance_kiosk_mode .o_hr_attendance_user_badge {
                    box-shadow: 0 0px 6px rgba(0, 0, 0, 0.16), 0 0px 6px rgba(0, 0, 0, 0.23);
                    background: linear-gradient(to right bottom, #2C3782, #c9a8a9) !important;
                }
                .o_hr_attendance_kiosk_mode .o_hr_attendance_user_badge img {
                    background: white;
                    border: 1px solid #d7d7d7;
                }
                .rounded-circle {
                    border-radius: 50% !important;
                }
                .img {
                    vertical-align: middle;
                }
                .alert-info {
                    background-color: #fff;
                    border: 0px;
                    color: #2C3782;
                }
                h1 {
                    font-family: 'Lato';
                    font-size: 1.5em !important;
                    font-weight: bold !important;
                    line-height: 1.2;
                }
                h2 {
                    font-family: 'Lato';
                    font-size: 1.3em !important;
                    font-weight: bold !important;
                    color: #464d69;
                }
                .h2 {
                    font-family: 'Lato';
                    font-size: 1em !important;
                    font-weight: bold !important;
                }
                #top, .o_portal, .o_main_navbar {
                    display: none; 
                }
            </style>
            <div id="attendance_success" class="o_hr_attendance_kiosk_mode_success_container o_home_menu_background">
                <span class="o_hr_attendance_kiosk_backdrop"/>
                <div class="o_hr_attendance_kiosk_mode">
                    <t t-if="employee_attendance">
                        <div class="o_hr_attendance_user_badge o_home_menu_background">
                            <img class="img rounded-circle" t-attf-src="{{employee_image_url}}" t-att-title="employee_name" t-att-alt="employee_name"/>
                        </div>
                        <t t-if="attendance_check_out">
                            <h1>Goodbye <t t-esc="employee_name"/>!</h1>
                            <div class="alert alert-info h2" role="status">
                                Checked out at <b><t t-esc="attendance_check_out_time"/></b>
                                <br/><b><t t-esc="hours_today"/></b>
                            </div>
                        </t>
                        <t t-else="">
                            <h1>Welcome <t t-esc="employee_name"/>!</h1>
                            <div class="alert alert-info h2" role="status">
                                Checked in at <b><t t-esc="attendance_check_in_time"/></b>
                            </div>
                        </t>
                    </t>
                    <t t-else="">
                        <div class="alert alert-warning" role="alert">Invalid request!</div>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>