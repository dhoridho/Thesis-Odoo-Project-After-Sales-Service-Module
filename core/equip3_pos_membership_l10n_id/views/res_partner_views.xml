<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="equip3_pos_membership_member_form_view_inherit" model="ir.ui.view">
        <field name="name">equip3.pos.membership.member.form.view.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="equip3_pos_membership.equip3_pos_membership_member_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='field_generate_barcode']" position="after">
                <label for="l10n_id_pkp"/>
                <div class="o_row">
                    <field name="l10n_id_pkp"/>
                </div>
              
                <field name="vat" string='NPWP' placeholder='xx.xxx.xxx.x-xxx.xxx' widget="mask" 
                    data-inputmask="'mask': '99.999.999.9-999.999'" 
                    attrs="{'invisible':[('l10n_id_pkp', '=', False)]}" />
                <field name="faktur_pajak_gabungan" 
                    attrs="{'invisible': [('l10n_id_pkp', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>