<odoo>
    <data>
        <record id="inherit_ir_model_form_view" model="ir.ui.view">
            <field name="name">inherit_ir_model_form_view</field>
            <field name="model">ir.model</field>
            <field name="priority">999</field>
            <field name="arch" type="xml">
                <form create="0">
                    <header>
                        <button name="set_active_tracking_log" string="Activate" type='object' attrs="{'invisible':[('is_use_tracking_log','=',True)]}" class="btn btn-primary"/>
                        <button name="set_inactive_tracking_log" string="Turn Off All Tracking Fields" type='object' attrs="{'invisible':[('is_use_tracking_log','=',False)]}" class="btn btn-primary"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="model" readonly="1"/>
                            <field name="is_mail_thread"  groups="base.group_no_one" invisible="1"/>
                            <field name="is_mail_activity"  groups="base.group_no_one" invisible="1"/>
                            <field name="is_use_tracking_log"  groups="base.group_no_one" readonly="1" />

                        </group>
                        <notebook>
                            <page string="Fields" name="fields">
                                <field name="field_id" create="0" delete="0">
                                    <tree string="Fields Description" create="0" delete="0" editable="bottom">
                                        <field name="name" readonly="1"/>
                                        <field name="field_description"  readonly="1"/>
                                        <field name="is_manually_set_tracking"  string="Tracking" attrs="{'column_invisible':[('parent.is_use_tracking_log','=',False)]}" />
                                    </tree>

                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="inherit_ir_model_tree_view" model="ir.ui.view">
            <field name="name">inherit_ir_model_tree_view</field>
            <field name="model">ir.model</field>
            <field name="arch" type="xml">
                <tree create="0">
                    <field name="name" readonly="1"/>
                    <field name="model" readonly="1"/>
                    <field name="is_use_tracking_log"  groups="base.group_no_one"/>
                    <field name="is_mail_thread"  groups="base.group_no_one" invisible="1"/>
                    <field name="is_mail_activity"  groups="base.group_no_one" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="ir_model_tracking_log_act" model="ir.actions.act_window">
            <field name="name">Tracking Logs</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ir.model</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state','=','base'),('transient','=',False)]</field>
            <field name="context">{'tree_view_ref':'equip3_tracking_logs.inherit_ir_model_tree_view','form_view_ref':'equip3_tracking_logs.inherit_ir_model_form_view','tracking_logs':1}</field>
        </record>

        <menuitem name="Tracking Logs"
                  id="ir_model_tracking_log_menu"
                  action="ir_model_tracking_log_act"
                  parent='base.menu_custom'
                  sequence="11"
        />


    </data>
</odoo>