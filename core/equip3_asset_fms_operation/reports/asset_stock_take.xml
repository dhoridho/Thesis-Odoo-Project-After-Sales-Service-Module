<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_asset_stock_take_document">
        <t t-call="equip3_asset_fms_operation.template_asset_advance_layout">
            <style>
                table, th, td {
                border: 1px solid black;
                border-collapse: collapse;
                }
            </style>
            <div class="page">
                <div class="row mb-4">
                    <h3>
                        <strong>Asset Stock Take</strong>
                    </h3>
                    <div class="col-3">
                    </div>
                    <div class="col-4;text-left" style="background-color:#404040;width:450px;">
                        <span style="color:#FFFFFF;padding: 10px;">Reference Inventory: </span>
                        <span style="color:#FFFFFF;padding: 10px;">
                            <span t-field="o.name" />
                            <br />
                        </span>

                        <span style="color:#FFFFFF;padding: 10px;">Facilities Area: </span>
                        <span style="color:#FFFFFF;padding: 10px;">
                            <span t-field="o.fac_area.name" />
                            <br />
                        </span>

                        <span style="color:#FFFFFF;padding: 10px;">Inventory Of: </span>
                        <span style="color:#FFFFFF;padding: 10px;">
                            <span t-field="o.inventory_of" />
                            <br />
                        </span>

                        <span style="color:#FFFFFF;padding: 10px;">Branch: </span>
                        <span style="color:#FFFFFF;padding: 10px;">
                            <span t-field="o.branch.name" />
                            <br />
                        </span>
                    </div>
                </div>
                <br />
                <table width="100%">
                    <thead>
                        <tr style="background-color:#808080; border-collapse: collapse;">
                            <th style="color:#FFFFFF;padding:2px;">
                                <span>Asset</span>
                            </th>
                            <th style="color:#FFFFFF;padding:2px;">
                                <span>Serial Number</span>
                            </th>
                            <th style="color:#FFFFFF;padding:2px;">
                                <span>Current Facilities Area</span>
                            </th>
                            <th style="color:#FFFFFF;padding:2px;">
                                <span>New Facilities Area</span>
                            </th>
                            <th style="color:#FFFFFF;padding:2px;">
                                <span>Curennt Status</span>
                            </th>
                            <th style="color:#FFFFFF;padding:2px;">
                                <span>New Status</span>
                            </th>
                            <th style="color:#FFFFFF;padding:2px;">
                                <span>Attachment</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody style="border: 1px solid black;border-collapse: collapse;">
                        <tr t-foreach="o.asset_inventory_line" t-as="rec">
                            <td style="padding:2px;">
                                <strong>
                                    <span t-field="rec.asset_id.name" />
                                </strong>
                            </td>
                            <td style="padding:2px;">
                                <strong>
                                    <span t-field="rec.serial_no" />
                                </strong>
                            </td>
                            <td style="padding:2px;">
                                <strong>
                                    <span t-field="rec.fac_area.name" />
                                </strong>
                            </td>
                            <td style="padding:2px;">
                                <strong>
                                    <span t-field="rec.new_fac_area.name" />
                                </strong>
                            </td>
                            <td style="padding:2px;">
                                <strong>
                                    <span t-field="rec.state_equip" />
                                </strong>
                            </td>
                            <td style="padding:2px;">
                                <strong>
                                    <span t-field="rec.real_state" />
                                </strong>
                            </td>
                            <td>
                                <t t-foreach="rec.attachment_ids" t-as="attach">
                                    <img style="max-height: 80px;padding:2px;"
                                        t-attf-src="data:image/*;base64,{{attach.datas}}" />
                                    <br />
                                    <br />
                                </t>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </t>
    </template>

    <template id="report_asset_stock_take_templ">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="equip3_asset_fms_operation.report_asset_stock_take_document" />
            </t>
        </t>
    </template>

</odoo>
