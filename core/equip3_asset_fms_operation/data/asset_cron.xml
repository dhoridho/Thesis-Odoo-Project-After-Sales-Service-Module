<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record forcecreate="True" id="asset_employee_rental_scheduler_ir_cron" model="ir.cron">
            <field name="name">Asset Employee Rental Schedule</field>
            <field name="model_id" ref="model_asset_employee_rental"/>
            <field name="state">code</field>
            <field name="code">model.scheduled_asset_employee_rental()</field>
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="datetime.now()"/>
            <field name="numbercall">-1</field>
        </record>

        <record forcecreate="True" id="repair_history_scheduler" model="ir.cron">
            <field name="name">Repair History</field>
            <field name="model_id" ref="model_maintenance_equipment"/>
            <field name="state">code</field>
            <field name="code">model.repair_history_cron()</field>
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="datetime.now()"/>
            <field name="numbercall">-1</field>
        </record>
    </data>
</odoo>
