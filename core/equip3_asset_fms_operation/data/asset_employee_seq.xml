<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="0">
    
		<record id="seq_asset_employee_request" model="ir.sequence">
			<field name="name">Asset Employee Request Seq</field>
			<field name="code">asset.employee.request</field>
			<field name="prefix">EAQ/%(day)s/%(month)s/%(y)s/</field>
			<field name="padding">3</field>
			<field name="company_id" eval="False"/>
		</record>
		<record id="seq_asset_employee_transfer" model="ir.sequence">
			<field name="name">Asset Employee Transfer Seq</field>
			<field name="code">asset.employee.transfer</field>
			<field name="prefix">EAT%(day)s/%(month)s/%(y)s/</field>
			<field name="padding">3</field>
			<field name="company_id" eval="False"/>
		</record>
		<record id="seq_asset_employee_return" model="ir.sequence">
			<field name="name">Asset Employee Return Seq</field>
			<field name="code">asset.employee.return</field>
			<field name="prefix">EAR/%(day)s/%(month)s/%(y)s/</field>
			<field name="padding">3</field>
			<field name="company_id" eval="False"/>
		</record>
        <record id="seq_asset_employee_rental" model="ir.sequence">
            <field name="name">Asset Employee Rental Seq</field>
            <field name="code">asset.employee.rental</field>
            <field name="prefix">EAFR/%(day)s/%(month)s/%(y)s/</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>
        </record>
    
    </data>
    <data noupdate="1">
    
        <record forcecreate="True" id="employee_asset_request_scheduler_ir_cron" model="ir.cron">
            <field name="name">Employee Asset Request Schedule</field>
            <field name="model_id" ref="model_employee_asset_request"/>
            <field name="state">code</field>
            <field name="code">model.scheduled_employee_asset_req()</field>
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="datetime.now() + (datetime.now(pytz.timezone('Asia/Singapore')).replace(hour=2, minute=33, second=00) - datetime.now(pytz.timezone('Asia/Singapore'))) % timedelta(hours=24)"/>
            <field name="numbercall">-1</field>
            <field eval="True" name="doall" />
        </record>

        <record forcecreate="True" id="employee_asset_transfer_scheduler_ir_cron" model="ir.cron">
            <field name="name">Employee Asset Transfer Schedule</field>
            <field name="model_id" ref="model_employee_asset_transfer"/>
            <field name="state">code</field>
            <field name="code">model.scheduled_employee_asset_transfer()</field>
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="datetime.now() + (datetime.now(pytz.timezone('Asia/Singapore')).replace(hour=2, minute=33, second=00) - datetime.now(pytz.timezone('Asia/Singapore'))) % timedelta(hours=24)"/>
            <field name="numbercall">-1</field>
            <field eval="True" name="doall" />
        </record>

        <record forcecreate="True" id="employee_asset_return_scheduler_ir_cron" model="ir.cron">
            <field name="name">Employee Asset Return Schedule</field>
            <field name="model_id" ref="model_employee_asset_return"/>
            <field name="state">code</field>
            <field name="code">model.scheduled_employee_asset_return()</field>
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="datetime.now() + (datetime.now(pytz.timezone('Asia/Singapore')).replace(hour=2, minute=33, second=00) - datetime.now(pytz.timezone('Asia/Singapore'))) % timedelta(hours=24)"/>
            <field name="numbercall">-1</field>
            <field eval="True" name="doall" />
        </record>
    
    </data>
    
    
</odoo>