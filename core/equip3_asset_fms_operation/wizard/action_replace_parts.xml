<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="action_replace_parts_wizard" model="ir.ui.view">
            <field name="name">action.replace.parts.wizard.form</field>
            <field name="model">action.replace.parts.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="parent_equipment_id" invisible="1"/>
                            <field name="equipment_id" string="Parts" required="1"/>
                            <field name="serial_no"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_confirm" type="object" string="Confirm" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- action.replace.parts.wizard action window -->
        <record id="action_replace_part_wizard_action" model="ir.actions.act_window">
            <field name="name">Action Replace Part Wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">action.replace.parts.wizard</field>
            <field name="view_mode">form</field>
        </record>
    </data>
</odoo>