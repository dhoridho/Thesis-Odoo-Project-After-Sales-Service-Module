<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="create_work_order_views" model="ir.ui.view">
            <field name="name">create.work.order.view</field>
            <field name="model">work.order.wizard</field>
            <field name="arch" type="xml">
                <form string="Create Work Order">
                    <sheet>
                        <group>
                            <group>
                                <field name="facility_area" readonly="1"/>
                                <field name="asset_id" readonly="1"/>
                                <field name="branch_id" required="1"/>
                            </group>
                            <group>
                                <field name="start_date" required="1"/>
                                <field name="end_date" required="1"/>
                                <field name="description" required="1"/>
                            </group>
                        </group>

                        <footer>
                            <button name="create_work_order" type="object" string="Create Work Order" class="oe_highlight"/>
                            <button special="cancel" string="Cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
