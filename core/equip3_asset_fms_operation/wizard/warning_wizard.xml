<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="create_work_order_view" model="ir.ui.view">
            <field name="name">Warning!</field>
            <field name="model">warning.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="message" widget="text" readonly="1"/>
                        </group>
                        <footer>
                            <button string="ok" class="btn-primary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>