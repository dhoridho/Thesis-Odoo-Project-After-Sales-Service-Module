<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="print_asset_qrcode_wizard_form_view" model="ir.ui.view">
            <field name="name">print.asset.qrcode.form.view</field>
            <field name="model">print.asset.qrcode.wizard</field>
            <field name="arch" type="xml">
                <form string="QR Code (PDF)">
                    <sheet>
                        <group>
                            <group>
                                <field name="allowed_paperformat_ids" widget="many2many_tags" invisible="1"/>
                                <field name="paperformat_id" required="1" domain="[('id', 'in', allowed_paperformat_ids)]" options="{'no_create': True, 'no_open': True}" readonly="1"/>
                            </group>
                        </group>
                        <footer>
                            <button name="action_confirm" type="object" string="Generate" class="oe_highlight"/>
                            <button special="cancel" string="Cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="print_asset_barcode_wizard_form_view" model="ir.ui.view">
            <field name="name">print.asset.barcode.form.view</field>
            <field name="model">print.asset.barcode.wizard</field>
            <field name="arch" type="xml">
                <form string="Barcode (PDF)">
                    <sheet>
                        <group>
                            <group>
                                <field name="allowed_paperformat_ids" widget="many2many_tags" invisible="1"/>
                                <field name="paperformat_id" required="1" domain="[('id', 'in', allowed_paperformat_ids)]" options="{'no_create': True, 'no_open': True}"/>
                            </group>
                        </group>
                        <footer>
                            <button name="action_confirm" type="object" string="Generate" class="oe_highlight"/>
                            <button special="cancel" string="Cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
