<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="create_multiple_threshold_view" model="ir.ui.view">
            <field name="name">multiple.threshold.form.view</field>
            <field name="model">multiple.threshold.wizard</field>
            <field name="arch" type="xml">
                <form string="Add Multiple Threshold">
                    <sheet>
                        <group>
                            <group>
                                <field name="threshold_value"/>
                                <field name="start_value"/>
                                <field name="frequency"/>
                            </group>
                        </group>

                        <footer>
                            <button name="add_threshold" type="object" string="Ok" class="oe_highlight"/>
                            <button special="cancel" string="Cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
