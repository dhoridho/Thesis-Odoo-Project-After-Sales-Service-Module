<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Material request inherit tree view -->
    <record id="material_request_tree_view_inherited" model="ir.ui.view">
        <field name="name">Inherit Material Request Tree</field>
        <field name="model">material.request</field>
        <field name="inherit_id" ref="equip3_inventory_operation.material_request_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='internal_transfer']" position="after">
                <field name="maintenance_wo_id" invisible="1"/>
                <field name="maintenance_ro_id" invisible="1"/>
            </xpath>
        </field>
    </record>

    <!-- Material request form view inherit -->
    <record id="material_request_form_view_inherited" model="ir.ui.view">
        <field name="name">Inherit Material Request Form</field>
        <field name="model">material.request</field>
        <field name="inherit_id" ref="equip3_inventory_operation.material_request_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='branch_id']" position="after">
                <field name="maintenance_wo_id" invisible="1"/>
                <field name="maintenance_ro_id" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>