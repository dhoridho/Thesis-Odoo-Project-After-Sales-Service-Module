<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- asset.usage tree view -->
        <record id="asset_usage_view_tree" model="ir.ui.view">
            <field name="name">asset.usage.view.tree</field>
            <field name="model">asset.usage</field>
            <field name="arch" type="xml">
                <tree>
                    <!-- Add your fields here -->
                    <field name="name"/>
                    <field name="facility_id"/>
                    <field name="equipment_ids" widget="many2many_tags"/>
                    <field name="start_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- asset.usage form view -->
        <record id="asset_usage_view_form" model="ir.ui.view">
            <field name="name">asset.usage.view.form</field>
            <field name="model">asset.usage</field>
            <field name="arch" type="xml">
                <form string="Asset Usage">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" attrs="{'invisible':[('state', '!=', 'draft')]}"/>
                        <button name="action_done" string="Done" type="object" class="oe_highlight" attrs="{'invisible':[('state', '!=', 'confirm')]}"/>
                        <field name="is_vehicle_or_asset" invisible="1"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="facility_id"/>
                                <field name="equipment_ids" widget="many2many_tags" domain="[('fac_area', '=', facility_id)]"/>
                                <field name="start_date"/>
                            </group>
                            <group>
                                <field name="company_id"/>
                                <field name="branch_id"/>
                                <field name="create_date"/>
                                <field name="create_uid"/>
                            </group>
                        </group>
                            <group name="timesheet" string="Time Sheet">
                            <notebook>
                                <page string="Asset" attrs="{'invisible':[('is_vehicle_or_asset', '!=', 'both'), ('is_vehicle_or_asset', '=', 'vehicle')]}">
                                    <field name="asset_usage_line" attrs="{'readonly': [('state', '!=', 'confirm')]}" context="{'default_start_time': start_date}">
                                        <tree editable="bottom">
                                            <field name="equipment_asset_id_domain" invisible="1"/>
                                            <field name="equipment_id" domain="equipment_asset_id_domain"/>
                                            <field name="start_time"/>
                                            <field name="end_time"/>
                                            <field name="operator_id"/>
                                            <field name="activity_type"/>
                                            <field name="asset_activity_id" domain="[('activity_type', '=', activity_type)]"/>
                                            <field name="notes"/>
                                            <field name="hour_meter"/>
                                            <field name="state" invisible="1"/>
                                        </tree>
                                    </field>
                                    </page>
                                    <page string="Vehicle" attrs="{'invisible':[('is_vehicle_or_asset', '!=', 'both'), ('is_vehicle_or_asset', '=', 'asset')]}">
                                    <field name="vehicle_usage_line" attrs="{'readonly': [('state', '!=', 'confirm')]}" context="{'default_start_time': start_date}">
                                        <tree editable="bottom">
                                            <field name="equipment_vehicle_id_domain" invisible="1"/>
                                            <field name="equipment_id" domain="equipment_vehicle_id_domain"/>
                                            <field name="start_time"/>
                                            <field name="end_time"/>
                                            <field name="operator_id"/>
                                            <field name="activity_type"/>
                                            <field name="asset_activity_id" domain="[('activity_type', '=', activity_type)]"/>
                                            <field name="notes"/>
                                            <field name="fuel_usage"/>
                                            <field name="odometer"/>
                                            <field name="hour_meter"/>
                                            <field name="state" invisible="1"/>
                                            </tree>
                                        </field>
                                    </page>
                                </notebook>
                            </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- asset.usage action window -->
        <record id="asset_usage_action" model="ir.actions.act_window">
            <field name="name">Asset Usage</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">asset.usage</field>
            <field name="view_mode">tree,form</field>
        </record>

	    <menuitem id="asset_timesheet_menu" name="Asset Timesheet" parent="maintenance.menu_maintenance_title" sequence="4"/>
        <menuitem name="Asset Usage" id="asset_usage_menu" parent="asset_timesheet_menu" sequence="10" action="asset_usage_action" />
        
    </data>
</odoo>
