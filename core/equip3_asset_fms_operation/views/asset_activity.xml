<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- asset.activity tree view -->
        <record id="activity_usage_view_tree" model="ir.ui.view">
            <field name="name">asset.activity.view.tree</field>
            <field name="model">asset.activity</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="activity_type"/>
                </tree>
            </field>
        </record>

        <!-- asset.activity form view -->
        <record id="asset_activity_view_form" model="ir.ui.view">
            <field name="name">asset.activity.view.form</field>
            <field name="model">asset.activity</field>
            <field name="arch" type="xml">
                <form string="Asset Activity">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="activity_type"/>
                            </group>
                            <group>
                                <field name="company_id"/>
                                <field name="branch_id"/>
                                <field name="create_date"/>
                                <field name="create_uid"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- asset.activity action window -->
        <record id="asset_activity_action" model="ir.actions.act_window">
            <field name="name">Activity</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">asset.activity</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="asset_activity_menu" name="Activity" action="asset_activity_action" parent="maintenance.menu_maintenance_configuration" sequence="99"/>
    </data>
</odoo>
