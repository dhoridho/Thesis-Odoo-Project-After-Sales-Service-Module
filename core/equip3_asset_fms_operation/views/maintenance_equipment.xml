<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- maintenance.equipment inherit form view -->
        <record id="inherit_equip_view_id_inherit" model="ir.ui.view">
            <field name="name">maintenance.equipment.inherit.view.form</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="equip3_asset_fms_masterdata.inherit_equip_view_id"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='scrapped_at']" position="after">
                    <field name="history_repair_count" attrs="{'invisible':[('history_repair_count', '=', 0)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>