<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="sh_asset_stock_barcode_mobile_res_config_settings_form" model="ir.ui.view">
        <field name="name">sh.asset_stock.barcode.mobile.res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_maintenance_config.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='maintenance']" position="inside">
                <h2>Asset Stock Mobile Barcode Scanner</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="sh_asset_stock_barcode_mobile_type" />
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="sh_asset_stock_barcode_mobile_type" class="o_light_label" widget="radio" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" invisible="1">
                        <div class="o_setting_left_pane">
                            <field name="sh_asset_stock_bm_is_cont_scan" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_asset_stock_bm_is_cont_scan" />
                            <div class="text-muted">
                                Continuous scanning or not
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="sh_asset_stock_bm_is_notify_on_success" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_asset_stock_bm_is_notify_on_success" />
                            <div class="text-muted">
                                Notification on Succeed
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="sh_asset_stock_bm_is_notify_on_fail" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_asset_stock_bm_is_notify_on_fail" />
                            <div class="text-muted">
                                Notification on Failed
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('sh_asset_stock_bm_is_notify_on_success', '=', False )]}">
                        <div class="o_setting_left_pane">
                            <field name="sh_asset_stock_bm_is_sound_on_success" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_asset_stock_bm_is_sound_on_success" />
                            <div class="text-muted">
                                Play Sound On Product Succeed
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('sh_asset_stock_bm_is_notify_on_fail', '=', False )]}">
                        <div class="o_setting_left_pane">
                            <field name="sh_asset_stock_bm_is_sound_on_fail" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_asset_stock_bm_is_sound_on_fail" />
                            <div class="text-muted">
                                Play Sound On Product Failed
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>

            <xpath expr="//div[@id='implementor_general']" position="after">
                <div id="implementor_asset_control">
                    <h2>Asset Control</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="implementor_asset_control">
                            <div class="o_setting_left_pane ">
                                <field name="asset_control"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Asset Control" for="asset_control"/>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container" attrs="{'invisible': [('asset_control', '=', False )]}">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_approval_matix_mp"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_approval_matix_mp"/>
                                <div class="text-muted">
                                    Set The Maintenance Plan Approval Matrix.
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_approval_matix_mwo"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_approval_matix_mwo"/>
                                <div class="text-muted">
                                    Set The Maintenance Work Order Approval Matrix.
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_approval_matix_mro"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_approval_matix_mro"/>
                                <div class="text-muted">
                                    Set The Maintenance Repair Order Approval Matrix.
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_approval_matix_asset_transfer"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_approval_matix_asset_transfer"/>
                                <div class="text-muted">
                                    Set The Asset Transfer Approval Matrix.
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_approval_matix_asset_employee_request"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_approval_matix_asset_employee_request"/>
                                <div class="text-muted">
                                    Set The Asset Employee Request Approval Matrix.
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_disposable_asset" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_disposable_asset" />
                                <div class="text-muted">
                                    Can sale and dispose asset from masterdata assets
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>