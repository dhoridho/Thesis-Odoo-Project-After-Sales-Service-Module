<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_account_asset_asset_form_inherited" model="ir.ui.view">
        <field name="name">account.asset.asset.form.inherited</field>
        <field name="model">account.asset.asset</field>
        <field name="inherit_id" ref="equip3_accounting_asset.view_account_asset_asset_form_inherit"/>
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="show_sale_dispose" invisible="1"/>
            </field>
<!--           <button name='set_to_close' position="attributes">-->
<!--                <attribute name="attrs">{'invisible':[('show_sale_dispose','=', False)]}</attribute>-->
<!--            </button>-->
            <button name='%(equip3_accounting_asset.asset_sale_action)d' position="attributes">
                <attribute name="attrs">{'invisible':[('show_sale_dispose','=', False)]}</attribute>
            </button>
        </field>
    </record>


    <record id="fms_view_account_asset_asset_form_inherit" model="ir.ui.view">
        <field name="name">fms.account.asset.asset.form.inherit</field>
        <field name="model">account.asset.asset</field>
        <field name="inherit_id" ref="om_account_asset.view_account_asset_asset_form"/>
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="show_dispose" invisible="1"/>
            </field>
            <xpath expr="//button[@name='set_to_close']" position="attributes">
                <attribute name="attrs">{'invisible':[('show_dispose','=', False)]}</attribute>
                <attribute name="states"></attribute>
            </xpath>
        </field>
    </record>

    <record id="hr_equipment_view_form_inherited" model="ir.ui.view">
        <field name="name">equipment.form.inherited</field>
        <field name="inherit_id" ref="equip3_asset_fms_masterdata.inherit_equip_view_id"/>
        <field name="model">maintenance.equipment</field>
        <field name="arch" type="xml">
            <button name="breakdown_action" position="before">
                <field name="is_sale_dispose" invisible="1"/>
                <field name="is_running_state" invisible="1"/>
                <button name="show_button_asset_popup" type="object" string="Sale" class="oe_highlight" attrs="{'invisible':[('is_sale_dispose','=',False)]}"/>
                <button name="set_to_close_changed" type="object" string="Dispose" attrs="{'invisible':[('is_sale_dispose','=',False)]}" />
            </button>
            <!-- button_dispose_equipment -->
            <!-- <button name="breakdown_action" position="before">
                 <button name='show_button_asset_popup' type='object' string='Sale' class="oe_highlight" attrs="{'invisible':[('is_running_state','=',False)]}"/>
                <button name="set_to_close_changed"  string="Dispose" type="object" attrs="{'invisible':[('is_running_state','=',False)]}"/> 
            </button> -->
            <field name="state" position="attributes">
                <attribute name="statusbar_visible">operative,missing,breakdown,maintenance</attribute>
            </field>
        </field>
    </record>

</odoo>