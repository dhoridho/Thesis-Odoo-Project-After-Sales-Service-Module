<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- asset.usage.line tree view -->
        <record id="asset_usage_line_view_tree" model="ir.ui.view">
            <field name="name">asset.usage.line.view.tree</field>
            <field name="model">asset.usage.line</field>
            <field name="arch" type="xml">
                <tree create="0">
                    <field name="equipment_id"/>
                    <field name="start_time"/>
                    <field name="end_time"/>
                    <field name="operator_id"/>
                    <field name="activity_type"/>
                    <field name="asset_activity_id"/>
                    <field name="notes"/>
                    <field name="fuel_usage"/>
                    <field name="odometer"/>
                    <field name="hour_meter"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>


        <!-- asset.usage.line action window -->
        <record id="asset_usage_line_action" model="ir.actions.act_window">
            <field name="name">Asset Usage Line</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">asset.usage.line</field>
            <field name="view_mode">tree</field>
            <field name="domain">[('state', '=', 'done')]</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem name="Asset Usage Line" id="asset_usage_line_menu" parent="asset_timesheet_menu" sequence="15" action="asset_usage_line_action" />
    </data>
</odoo>