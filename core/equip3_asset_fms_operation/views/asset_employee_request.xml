<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- employee.asset.request tree view -->
    <record id="employee_asset_request_view_tree" model="ir.ui.view">
        <field name="name">employee.asset.request.view.tree</field>
        <field name="model">employee.asset.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="branch_id"/>
                <field name="create_uid"/>
                <field name="create_date"/>
                <field name="due_date"/>
                <field name="state" widget="badge" decoration-success="state == 'transfer'" decoration-info="state in ('draft', 'approved')" decoration-danger="state in ('expired', 'cancelled')" decoration-warning="state == 'waiting_approval'"/>
            </tree>
        </field>
    </record>
    <!-- employee.asset.request form view -->
    <record id="employee_asset_request_view_form" model="ir.ui.view">
        <field name="name">employee.asset.request.view.form</field>
        <field name="model">employee.asset.request</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
					<button type="object" name="action_waiting_approval" states="draft" string="Request for Approval" class="oe_highlight"/>
					<button type="object" name="action_approved" states="waiting_approval" string="Approve" class="oe_highlight"/>
					<button type="object" name="action_transfer" string="Set to Progress" class="oe_highlight" states="approved"/>
					<button type="object" name="action_cancel" string="Cancel" attrs="{'invisible': [('state', 'in', ['draft', 'cancelled', 'transfer'])]}"/>
					<field name="state" widget="statusbar" statusbar_visible="draft,waiting_approval,approved,transfer,expired,cancelled" />
				</header>
				<sheet>
                    <div class="oe_button_box" name="smart_buttons">
                        <button name="action_view_employee_asset_transfer" type="object" class="oe_stat_button" icon="fa-list" attrs="{'invisible': [('employee_asset_transfer_count', '=', 0)]}">
                            <field string="Transfer" name="employee_asset_transfer_count" widget="statinfo"/>
                        </button>
                    </div>
					<div class="oe_title">
						<h1>
							<field name="name" readonly="1" />
						</h1>
					</div>
					<group>
						<group>
							<field name="create_uid" readonly="1" />
                            <field name="create_date" readonly="1" />
                            <field name="branch_id" attrs="{'readonly': [('state', 'in', ['approved','transfer','cancelled'])]}"/>
						</group>
						<group>
                            <field name="due_date" attrs="{'readonly': [('state', 'in', ['approved','transfer','cancelled'])]}"/>
                            <field name="description" attrs="{'readonly': [('state', 'in', ['approved','transfer','cancelled'])]}"/>
						</group>
					</group>
					<notebook>
						<page string="Asset">
							<field name="assets_line" attrs="{'readonly': [('state', 'in', ['approved','transfer','cancelled'])]}">
								<tree string="Asset" editable="bottom">
									<field name="asset_id"/>
                                    <field name="asset_category_id"/>
									<field name="employee_id"/>
									<field name="notes"/>
								</tree>
							</field>
						</page>
					</notebook>
				</sheet>
				<div class="oe_chatter">
					<field name="message_follower_ids" widget="mail_followers" />
					<field name="activity_ids" widget="mail_activity" />
					<field name="message_ids" widget="mail_thread" />
				</div>
            </form>
        </field>
    </record>

    <record id="employee_asset_request_action" model="ir.actions.act_window">
		<field name="name">Employee Asset Request</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">employee.asset.request</field>
		<field name="view_mode">tree,form</field>
	</record>

	<menuitem
        id="employee_asset_menu"
        name="Employee Asset"
        parent="maintenance.menu_maintenance_title"
        sequence="4"/>

	<menuitem
        id="employee_asset_request_menu"
        name="Employee Asset Request"
        parent="equip3_asset_fms_operation.employee_asset_menu"
        sequence="10"
        action="employee_asset_request_action"/>
</odoo>