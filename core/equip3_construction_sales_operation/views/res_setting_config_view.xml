<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="const_res_config_sale_settings_view" model="ir.ui.view">
        <field name="name">const.res.config.settings.inherit.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="equip3_construction_accessright_setting.construction_sale_res_config_settings_views_forms" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='temp_const']/.." position="after">
                <div class="col mx-md-n5 o_settings_container" name="sale_order_approval" attrs="{'invisible': ['|', ('is_customer_approval_matrix_const', '=', False), ('construction', '=', False)]}" style="max-width:500px !important;margin-top: -85px;">
                    <div class="col-12 o_setting_box" style="margin: 4px;">
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row mt10" attrs="{'invisible': ['|', ('is_customer_approval_matrix_const', '=', False), ('construction', '=', False)]}">
                                    <span class="ml-3"><b>Default Approval Matrix Configuration</b> </span>
                                    <div class="carousel-inner ml-md-3 text-muted">
                                        Set Approval Matrix.
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="o_setting_right_pane">
                            <div class="content-group mt-2">
                                <field name="is_contract_amount" attrs="{'invisible': ['|', ('is_customer_approval_matrix_const', '=', False), ('construction', '=', False)]}"/>
                                <div class="row mt10" attrs="{'invisible': ['|', ('is_customer_approval_matrix_const', '=', False), ('construction', '=', False)]}" style="margin-top: -24px; margin-left: 24px;">
                                    <label for="is_contract_amount" class="o_light_label" style="font-weight:bold;"/>
                                </div>
                            </div>
                        </div>
                        <div class="o_setting_right_pane">
                            <div class="content-group mt-2">
                                <div class="row mt10" attrs="{'invisible': ['|', '|', ('is_customer_approval_matrix_const', '=', False), ('is_contract_amount', '=', False), ('construction', '=', False)]}">
                                    <label for="contract_sequence" class="col-auto o_light_label" style="font-weight:bold;"/>
                                    <span class="o_doc_link" href="#" title="Define the sequence number in sale order approval matrix process for each configuration" style="color: #7C7BAD; margin-left:-10px;"/>
                                    <field name="contract_sequence" required="1" attrs="{'invisible': [('is_contract_amount', '=', False)]}" style="width:30px; margin-top: -2px; margin-left:10px;" invisible="1"/>
                                    <field name="contract_sequence_select" attrs="{'invisible': [('is_contract_amount', '=', False)]}" style="width: 65px;margin-left: 5px;" required="1"/>
                                </div>
                            </div>
                        </div>
                        <div class="o_setting_right_pane">
                            <div class="content-group mt-2">
                                <field name="is_adjustment_amount" attrs="{'invisible': ['|', ('is_customer_approval_matrix_const', '=', False), ('construction', '=', False)]}"/>
                                <div class="row mt10" attrs="{'invisible': ['|', ('is_customer_approval_matrix_const', '=', False), ('construction', '=', False)]}" style="margin-top: -24px; margin-left: 24px;">
                                    <label for="is_adjustment_amount" class="o_light_label" style="font-weight:bold;"/>
                                </div>
                            </div>
                        </div>
                        <div class="o_setting_right_pane">
                            <div class="content-group mt-2">
                                <div class="row mt10" attrs="{'invisible': ['|', '|', ('is_customer_approval_matrix_const', '=', False), ('is_adjustment_amount', '=', False), ('construction', '=', False)]}">
                                    <label for="adjustment_sequence" class="col-auto o_light_label" style="font-weight:bold;"/>
                                    <span class="o_doc_link" href="#" title="Define the sequence number in sale order approval matrix process for each configuration" style="color: #7C7BAD; margin-left:-10px;"/>
                                    <field name="adjustment_sequence" required="1" attrs="{'invisible': [('is_adjustment_amount', '=', False)]}" style="width:30px; margin-top: -2px; margin-left:10px;" invisible="1"/>
                                    <field attrs="{'invisible': [('is_adjustment_amount', '=', False)]}" name="adjustment_sequence_select" style="width: 65px;margin-left: 5px;" required="1"/>
                                </div>
                            </div>
                        </div>
                        <div class="o_setting_right_pane">
                            <div class="content-group mt-2">
                                <field name="is_discount_amount_const" attrs="{'invisible': ['|', ('is_customer_approval_matrix_const', '=', False), ('construction', '=', False)]}"/>
                                <div class="row mt10" attrs="{'invisible': ['|', ('is_customer_approval_matrix_const', '=', False), ('construction', '=', False)]}" style="margin-top: -24px; margin-left: 24px;">
                                    <label for="is_discount_amount_const" class="o_light_label" style="font-weight:bold;"/>
                                </div>
                            </div>
                        </div>
                        <div class="o_setting_right_pane">
                            <div class="content-group mt-2">
                                <div class="row mt10" attrs="{'invisible': ['|', '|', ('is_customer_approval_matrix_const', '=', False), ('is_discount_amount_const', '=', False), ('construction', '=', False)]}">
                                    <label for="discount_sequence_const" class="col-auto o_light_label" style="font-weight:bold;"/>
                                    <span class="o_doc_link" href="#" title="Define the sequence number in sale order approval matrix process for each configuration" style="color: #7C7BAD; margin-left:-10px;"/>
                                    <field name="discount_sequence_const" required="1" attrs="{'invisible': [('is_discount_amount_const', '=', False)]}" style="width:30px; margin-top: -2px; margin-left:10px;" invisible="1"/>
                                    <field name="discount_sequence_select_const" style="width: 65px;margin-left: 5px;" attrs="{'invisible': [('is_discount_amount_const', '=', False)]}" required="1"/>
                                    <field name="sale_matrix_config" invisible="1"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
