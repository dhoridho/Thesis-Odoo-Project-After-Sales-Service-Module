<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_partner_view_buttons_const" model="ir.ui.view">
            <field name="name">res.partner.view.buttons.const</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="sale.res_partner_view_buttons" />
            <field name="priority" eval="3"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']/button[@name='%(sale.act_res_partner_2_sale_order)d']" position='before'>
                    <button name="action_sale_order_cons"
                            type="object"
                            class="oe_stat_button"
                            icon="o-hm-smart-construction-sales-order" >
                        <field name="total_sale_order_cons" widget="statinfo"/>
                    </button>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>                
            