                </xpath>
                <xpath expr="//notebook/page/field[@name='section_ids']" position="attributes">
                    <attribute name="class">o_job_estimates_section</attribute>
                </xpath>
                <xpath expr="//notebook/page/field[@name='variable_ids']" position="attributes">
                    <attribute name="class">o_job_estimates_variable</attribute>
                </xpath>
                <xpath expr="//notebook/page/field[@name='material_estimation_ids']" position="attributes">
                    <attribute name="class">o_job_estimates_line</attribute>
                </xpath>
                <xpath expr="//notebook/page/field[@name='labour_estimation_ids']" position="attributes">
                    <attribute name="class">o_job_estimates_line</attribute>
                </xpath>
                <xpath expr="//notebook/page/field[@name='subcon_estimation_ids']" position="attributes">
                    <attribute name="class">o_job_estimates_subcon</attribute>
                </xpath>
                <xpath expr="//notebook/page/field[@name='overhead_estimation_ids']" position="attributes">
                    <attribute name="class">o_job_estimates_line</attribute>
                </xpath>
                <xpath expr="//notebook/page/field[@name='equipment_estimation_ids']" position="attributes">
                    <attribute name="class">o_job_estimates_line</attribute>
                </xpath>
                <xpath expr="//notebook/page/field[@name='internal_asset_ids']" position="attributes">
                    <attribute name="class">o_job_estimates_line</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
