<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="project_form_view_inherit_construction_sale" model="ir.ui.view">
            <field name="name">Project Form View Inherit Construction</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="equip3_construction_masterdata.project_form_view_inherit_construction"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']/button[@name='action_view_cost_sheet']" position='before'>
                    <button name="action_boq"
                            type="object"
                            class="oe_stat_button"
                            icon="o-hm-smart-construction-job-estimate">
                        <field name="total_job_estimate" widget="statinfo" string="BOQ"/>
                    </button>
                    <button name="action_sale_order"
                            type="object"
                            class="oe_stat_button"
                            icon="o-hm-smart-crm-agreement">
                        <field name="total_sale_order" widget="statinfo" string="Contracts"/>
                    </button>
                </xpath>

                 <xpath expr="/form/header/button[@name='button_complete']" position="before">
                    <button string="Create BOQ" class="oe_highlight" attrs="{'invisible':[('primary_states','in',['cancelled','completed'])]}"
                            name="action_create_boq" type="object" />
                </xpath>

                <xpath expr="//notebook/page[@name='project_milestone']/group/group[@name='other_info_left']/field[@name='main_contract_amount']" position="before">
                    <field name="sale_order_main" readonly="1" attrs = "{'invisible':[('department_type','=', 'department')]}"/>
                    <field name="main_order_date" readonly="1" attrs = "{'invisible':[('department_type','=', 'department')]}"/>
                    <field name="main_job_estimate" readonly="1" attrs = "{'invisible':[('department_type','=', 'project')]}"/>
                    <field name="main_approved_date" readonly="1" attrs = "{'invisible':[('department_type','=', 'project')]}"/>
                </xpath>
            </field>
        </record>



        <record id="project_form_view_inherit_construction_sale_split" model="ir.ui.view">
            <field name="name">Project Form View Inherit Construction</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="equip3_construction_masterdata.edit_project"/>
            <field name="arch" type="xml">

                <xpath expr="//button[@name='attachment_tree_view']" position='after'>
                    <button name="action_boq"
                            type="object"
                            class="oe_stat_button"
                            icon="o-hm-smart-construction-job-estimate">
                        <field name="total_job_estimate" widget="statinfo" string="BOQ"/>
                    </button>
                    <button name="action_quotations"
                            type="object"
                            class="oe_stat_button"
                            icon="o-hm-smart-crm-quotations">
                        <field name="total_quotation" widget="statinfo" string="Quotations"/>
                    </button>
                    <button name="action_sale_order"
                            type="object"
                            class="oe_stat_button"
                            icon="o-hm-smart-crm-agreement">
                        <field name="total_sale_order" widget="statinfo" string="Contracts"/>
                    </button>
                </xpath>

                <xpath expr="/form/header" position="inside">
                    <button string="Create BOQ" class="oe_highlight" attrs="{'invisible':[('primary_states','in',['cancelled','completed'])]}"
                            name="action_create_boq" type="object" />
                </xpath>

                <xpath expr="//notebook/page[@name='project_milestone']/group/group[@name='other_info_left']/field[@name='main_contract_amount']" position="before">
                    <field name="sale_order_main" readonly="1" attrs = "{'invisible':[('department_type','=', 'department')]}"/>
                    <field name="main_order_date" readonly="1" attrs = "{'invisible':[('department_type','=', 'department')]}"/>
                    <field name="main_job_estimate" readonly="1" attrs = "{'invisible':[('department_type','=', 'project')]}"/>
                    <field name="main_approved_date" readonly="1" attrs = "{'invisible':[('department_type','=', 'project')]}"/>
                </xpath>

            </field>
        </record>

        <record id="variation_order_view_construction_inherit_sale" model="ir.ui.view">
            <field name="name">variation.order.view.construction.inherit.sale</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="equip3_construction_masterdata.variation_order_view_construction"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='project_milestone']/notebook[@name='variation_order_noteboook']/page[@name='variation_order_ids']/field[@name='variation_order_ids']/tree/field[@name='contract_amount']" position="before">
                    <field name="name" string="Variation Order"/>
                    <field name="order_date" />
                </xpath>
                <xpath expr="//notebook/page[@name='project_milestone']/notebook[@name='variation_order_noteboook']/page[@name='variation_order_internal_ids']/field[@name='variation_order_internal_ids']/tree/field[@name='approved_date']" position="before">
                    <field name="name" string="Variation Order"/>
                </xpath>
            </field>
        </record>

        <record id="project_form_view_inherit_construction_inherit22" model="ir.ui.view">
            <field name="name">Project Form View Inherit Construction</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="equip3_construction_masterdata.project_form_view_inherit_construction"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='project_completion']/field[@name='project_completion_ids']/tree[1]" position="after">
                    <form edit="false" create="false" delete="true">
                        <sheet>
                            <group name="main">
                                <group>
                                    <field name="project_id" invisible="1"/>
                                    <field name="completion_id" invisible="1"/>
                                    <field name="name" attrs="{'required': [('department_type', '=', 'project')], 'invisible': [('department_type','=','department')]}"/>
                                    <field name="job_estimate" attrs="{'required': [('department_type', '=', 'department')], 'invisible': [('department_type','=','project')]}" string='BOQ'/>
                                    <field name="department_type" invisible="1"/>
                                    <field name="contract_percentage" force_save='1'/>
                                </group>
                                <group>
                                    <field name="completion_line" invisible='1'/>
                                    <field name="project_completion" widget="progressbar"/>
                                </group>
                            </group>
                            <group name="main2">
                                <field name="stage_details_ids" nolabel="1" widget="one2many_list">
                                    <tree editable="bottom">
                                        <control>
                                            <create name="add_product_control" string="Add a stage"/>
                                        </control>
                                        <field name="sequence" widget='handle'/>
                                        <field name="sr_no" />
                                        <field name="stage_id" invisible="1" />
                                        <field name="name" required="1"/>
                                        <field name="stage_weightage" required="1"/>
                                        <field name="stage_completion"/>
                                    </tree>
                                </field>
                            </group>
                        </sheet>
                    </form>
                </xpath>
                <xpath expr="//page[@name='project_completion']/field[@name='project_completion_ids']/tree/field[@name='completion_id']" position="after">
                    <field name="name" attrs="{'required': [('department_type', '=', 'project')], 'column_invisible': [('parent.department_type','=','department')]}"/>  
                    <field name="job_estimate" attrs="{'required': [('department_type', '=', 'department')], 'column_invisible': [('parent.department_type','=','project')]}" string='BOQ'/>
                    <field name="department_type" invisible="1"/>
                </xpath>
                <xpath expr="//page[@name='project_completion']/field[@name='project_completion_ids']/tree/field[@name='project_completion']" position="after">
                    <button name="edit_contract_completion" type="object" class="fa fa-pencil-square-o oe_edit_only" width="100%" height="100%"/>
                    <button name="delete_contract_completion" type="object" class="fa fa-trash-o oe_edit_only"/>
                </xpath>
                <xpath expr="//page[@name='project_completion']/field[@name='project_completion_ids']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//page[@name='project_completion']/field[@name='project_completion_ids']/tree" position="attributes">
                    <attribute name="create">false</attribute>
                    <attribute name="edit">false</attribute>
                </xpath>
                <xpath expr="//page[@name='project_completion']/field[@name='project_completion_ids']" position="before">
                    <group>
                        <group>
                            <field name="all_project_progress" widget="progressbar"/>
                        </group>
                        <group>
                            <button name="add_contract_completion" string="Add a contract completion" type="object" class="oe_edit_only oe_highlight mt-3 mb-3"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- project.completion.const form view -->
        <record id="project_completion_const_view_form" model="ir.ui.view">
            <field name="name">project.completion.const.view.form</field>
            <field name="model">project.completion.const</field>
            <field name="arch" type="xml">
                <form edit="false" create="false" delete="true">
                    <sheet>
                        <group name="main">
                            <group>
                                <field name="project_id" invisible="1"/>
                                <field name="completion_id" invisible="1"/>
                                <field name="name" attrs="{'required': [('department_type', '=', 'project')], 'invisible': [('department_type','=','department')]}"/>
                                <field name="job_estimate" attrs="{'required': [('department_type', '=', 'department')], 'invisible': [('department_type','=','project')]}" string='BOQ'/>
                                <field name="department_type" invisible="1"/>
                                <field name="contract_percentage" force_save='1'/>
                            </group>
                            <group>
                                <field name="completion_line" invisible='1'/>
                                <field name="project_completion" widget="progressbar"/>
                            </group>
                        </group>
                        <button name="scope_as_stage" string="Project Scope" type="object" class="oe_highlight"/>
                        <button name="section_as_stage" style="margin-left: 5px;" string="Section" type="object" class="oe_highlight"/>
                        <group name="main2">
                            <field name="stage_details_ids" nolabel="1" widget="one2many_list">
                                <tree editable="bottom">
                                    <control>
                                        <create name="add_product_control" string="Add a stage"/>
                                    </control>
                                    <field name="sequence" widget='handle'/>
                                    <field name="sr_no" />
                                    <field name="stage_id" invisible="1" />
                                    <field name="name" required="1" attrs="{'readonly': [('stage_completion', '>', 0)]}"/>
                                    <field name="stage_weightage" required="1" attrs="{'readonly': [('stage_completion', '>', 0)]}"/>
                                    <field name="stage_completion" attrs="{'column_invisible': [('parent.project_completion', '=', 0)]}"/>
                                </tree>
                            </field>
                        </group>
                        <footer>
                            <button name="save_contract_completion" string="Save" type="object" class="oe_highlight"/>
                            <button special="cancel" string="Cancel" class="btn btn-secondary"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_view_project_for_sale_construction" model="ir.actions.act_window">
            <field name="name">Projects</field>
            <field name="res_model">project.project</field>
            <field name="view_ids" eval="[
                (5, 0, 0),
                (0, 0, {'view_mode': 'kanban', 'view_id': ref('equip3_construction_masterdata.view_project_kanban_const_sale')}),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('project.view_project')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('equip3_construction_masterdata.edit_project')}),
                ]"/>
            <field name="search_view_id" ref="project.view_project_project_filter"/>
            <field name="domain">[('department_type', '=', 'project'), ('primary_states', '!=', 'lost')]</field>
            <field name="context">{'default_department_type': 'project','is_sale_project':True}</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="target">main</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No projects found. Let's create one!
                </p>
            </field>
        </record>

        <menuitem 
            id="menu_project_for_sale_construction"
            name="Projects"
            parent="sale_order_menu_new"
            action="action_view_project_for_sale_construction"
            sequence="1"/>



    </data>
</odoo>