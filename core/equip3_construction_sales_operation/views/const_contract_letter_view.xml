<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="const_contract_letter_form_view" model="ir.ui.view">
            <field name="name">const.contract.letter.form</field>
            <field name="model">const.contract.letter</field>
            <field name="arch" type="xml">
                <form string="Career Transition Letter" >
                    
                    <sheet>
                        <group>

                            <div class="oe_title" style="width: 100%;">

                                <h1><field name="name"  required="1"/></h1>

                            </div>
                                   
                        </group>
                        <notebook>
                            <page name="letter_content" string="Letter Content">
                                    <field name="letter_content" nolabel="1"/>
                            </page>


                            <page name="letter_content_variable" string="Variables">
                                <field name="career_letter_ids" readonly="1" force_save="1">
                                    <tree >
                                        <field name="variable_name" />
                                        <field name="description" string="Descriptions"/>
                                    </tree>
                                    </field>

                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="const_contract_letter_tree_view" model="ir.ui.view">
            <field name="name">const.contract.letter.form</field>
            <field name="model">const.contract.letter</field>
            <field name="arch" type="xml">
                <tree string="Career Transition Letter" >
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record id="const_contract__letter_search_view" model="ir.ui.view">
            <field name="name">const.contract.letter.search</field>
            <field name="model">const.contract.letter</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="const_contract_letter_act_window" model="ir.actions.act_window">
            <field name="name">Contract Letter</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">const.contract.letter</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>

        </record>

        <menuitem name="Contract Letter" 
                  id="const_contract_letter_menu" 
                  parent="sale_order_menu_new" 
                  action="const_contract_letter_act_window"
                  sequence="5"/>

        
        <record id="sale_order_const_view_form_inherit_new" model="ir.ui.view">
            <field name="name">sale_order_const_view_form_inherit_new</field>
            <field name="model">sale.order.const</field>
            <field name="inherit_id" ref="sale_order_const_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group[@name='main_form']/group[@name='left_section_main']/field[@name='report_template_id']" position="after">
                    <field name="contract_template" invisible="0"/>
                    <field name="edit_hide_css" invisible="1"/>
                </xpath>
            </field>
        </record> 
                  
    </data>
</odoo>