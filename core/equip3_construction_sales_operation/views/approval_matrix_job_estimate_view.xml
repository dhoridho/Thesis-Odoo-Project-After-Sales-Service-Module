<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_form_approval_matrix_job_estimates" model="ir.ui.view">
        <field name="name">approval.matrix.job.estimates.form</field>
        <field name="model">approval.matrix.job.estimates</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title pr-0">
                        <h1 class="d-flex flex-row justify-content-between">
                            <field name="name" placeholder="Approval Name" class="o_task_name text-truncate"/>
                        </h1>
                    </div>
                    <div attrs="{'invisible': [('department_type', '=', 'project')]}" groups="sales_team.group_sale_manager">
                        <div> 
                            <field name="set_default"/>
                            <label for="set_default"/>
                        </div>
                    </div>
                    <div attrs="{'invisible': [('department_type', '=', 'department')]}" groups="equip3_construction_accessright_setting.group_construction_director"> 
                        <div>
                            <field name="set_default"/>
                            <label for="set_default"/>
                        </div>
                    </div>
                    <group>
                        <group>
                            <field name="project_id" widget="many2many_tags" attrs="{'required': [('set_default', '=', False)], 'invisible': [('set_default', '=', True)]}"/>
                            <field name="department_type" invisible="1"/>
                            <field name="type_boq" required='1'/>
                            <field name="minimum_amt" class="thousand-separator-input"/>
                            <field name="maximum_amt" class="thousand-separator-input"/>
                        </group>
                        <group>
                            <field name="company_id" force_save="1" />
                            <field name="branch_id" required="1"/>
                            <field name="create_uid" string='Created By'/>
                            <field name="create_date" string='Creation Date'/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Approver Line">
                            <field name="approval_matrix_ids" context="{'approval_matrix_ids' : approval_matrix_ids}">
                                <tree editable="bottom" class="class_container_approver_matrix">
                                    <field name="sequence" widget="handle" />
                                    <field name="sequence2" force_save="1" readonly="1" class="approver_matrix_sequence"/>
                                    <field name="approvers" widget="many2many_tags" required='1'/>
                                    <field name="minimum_approver" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_tree_approval_matrix_job_estimates" model="ir.ui.view">
        <field name="name">approval.matrix.job.estimates.tree</field>
        <field name="model">approval.matrix.job.estimates</field>
        <field name="arch" type="xml">
            <tree string="BOQ Approval Matrix" multi_edit="1" sample="1">
                <field name ="name"/>
                <field name="minimum_amt" />
                <field name="maximum_amt" />
                <field name="branch_id"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <!-- <record id="view_job_estimate_approval_filter" model="ir.ui.view">
        <field name="name">job.estimate.approval.filter.projectid</field>
        <field name="model">approval.matrix.job.estimates</field>
        <field name="arch" type="xml">
            <search string="Project">
               <group name="group_by" string="Group By">
                   <filter name="project_id" string="Project" context="{'group_by' : 'project_id'}" />
               </group>
            </search>
        </field>
    </record> -->

    <record id="action_approval_matrix_job_estimates" model="ir.actions.act_window">
        <field name="name">BOQ Approval Matrix</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">approval.matrix.job.estimates</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('department_type', '=', 'project')]</field>
        <field name="context">{'default_department_type': 'project'}</field>
        <field name="target">current</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Approval Matrix found. Let's create one!
            </p>
        </field>
    </record>

    <menuitem
            id="approving_matrix_job_estimate"
            name="BOQ Approval Matrix"
            parent="equip3_sale_operation.menu_approval_matrix_sale_order"
            action="action_approval_matrix_job_estimates"
            sequence="1"/>


</odoo>
