<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="job_estimate_report_form" model="ir.ui.view">
        <field name="name">job.estimate.report</field>
        <field name="model">job.estimate.report</field>
        <field name="arch" type="xml">
            <form string="BOQ Print Option">
                <sheet>
                    <separator string="Print Options" colspan="4" />
                    <group>
                        <group>
                            <field name="print_option" widget="radio"/>
                        </group>
                        <group>
                            <field name="print_level_option" widget="radio" invisible="0"/>
                            <field name="job_estimate_id" invisible="1"/>
                        </group>
                    </group>
                    <separator/>
                    <footer>
                        <button name="print_job_estimate" string="Print" type="object" class="oe_highlight" />
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </sheet>    
            </form>
        </field>
    </record>

</odoo>