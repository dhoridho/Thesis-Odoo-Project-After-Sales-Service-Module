<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- sale.order.report.wizard form view -->
    <record id="model_name_view_form" model="ir.ui.view">
        <field name="name">sale.order.report.wizard.view.form</field>
        <field name="model">construction.sale.order.report.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <separator string="Print Options" colspan="4" />
                    <group>
                        <group>
                            <field name="print_option" widget="radio"/>
                        </group>
                        <group>
                            <field name="print_level_option" widget="radio"/>
                            <field name="sale_order_id" invisible ="1"/>
                        </group>
                        <group>
                        </group>
                        <group>
                            <field name="is_rounding" string="Price Rounding"/>
                            <field name="print_contract_letter"  attrs="{'invisible': [('print_option','!=','pdf')]}"/>
                        </group>
                    </group>
                    <separator/>
                    <footer>
                        <button name="print_sale_order" string="Print" type="object" class="oe_highlight" />
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>