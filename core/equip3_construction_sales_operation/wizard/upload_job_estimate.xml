<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_upload_job_estimate" model="ir.ui.view">
        <field name="name">upload.job.estimate</field>
        <field name="model">upload.job.estimate</field>
        <field name="arch" type="xml">
            <form string="Upload Job Estimate">
                <div class="d-inline-flex" id="download_bukti_potong_template">
                    <p>Download BOQ Template</p>
                    <div class="" role="alert" style="margin-left: 10px; margin-top: 0px;">
                        <a
                            href="/equip3_construction_sales_operation/static/sample_data/BOQ_With_Variable.xlsx"
                            target="_blank">
                            <strong>With Variable</strong>
                        </a> / 
                        <a
                            href="/equip3_construction_sales_operation/static/sample_data/BOQ_Without_Variable.xlsx"
                            target="_blank">
                            <strong>Without Variable</strong>
                        </a>
                    </div>
                </div>
                <br/>
                <group>
                    <group>
                        <field name="type" />
                        <field name="attachment_file" filename="file_name" required='1'/>
                        <field name="file_name" invisible="1"/>
                    </group>
                </group>
                <group>
                    <field name="description" invisible="1"/>
                </group>
                <footer>
                    <button name="import_action" string="Import" type="object" default_focus="1" class="oe_highlight"/>
                    <button special="cancel" string="Close" class="oe_highlight" />
                </footer>
            </form>
        </field>
    </record>

    <!-- Export -->
    <record id="view_export_job_estimate" model="ir.ui.view">
        <field name="name">export.job.estimate</field>
        <field name="model">export.job.estimate</field>
        <field name="arch" type="xml">
            <form string="Export Job Estimate">
                <group>
                    <group>
                        <field name="type" widget='radio' required='1'/>
                        <field name="job_estimate_id" invisible="1"/>
                    </group>
                </group>
                <footer>
                    <button name="action_export" string="Export" type="object" default_focus="1" class="oe_highlight"/>
                    <button special="cancel" string="Close" class="oe_highlight" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_upload_job_estimate" model="ir.actions.act_window">
        <field name="name">Import BOQ</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">upload.job.estimate</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref='view_upload_job_estimate'/>
        <field name="target">new</field>
    </record>

</odoo>