<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="contract_completion_validation_wizard_view_form" model="ir.ui.view">
        <field name="name">contract.completion.validation.wizard</field>
        <field name="model">contract.completion.validation.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirmation">
                    <field name="txt" nolabel="1" readonly="1"/>
                    <field name="contract_completion_id" invisible="1"/>
                <footer>
                    <button name="action_confirm" string="Yes" type="object" class="oe_highlight"/>
                    <button name="action_cancel" string="Cancel" type="object" class="btn btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>