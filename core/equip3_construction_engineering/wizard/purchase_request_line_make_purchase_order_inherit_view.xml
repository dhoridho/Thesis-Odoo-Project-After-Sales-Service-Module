<?xml version="1.0" encoding="utf-8"?>
<odoo>    
    <record id="inherit_purchase_request_line_purchase_order_form_view_inherit_engineering" model="ir.ui.view">
		<field name="name">view.purchase.request.line.make.purchase.order.tree.inherits.engineering</field>
		<field name="model">purchase.request.line.make.purchase.order</field>
		<field name="inherit_id" ref="purchase_request.view_purchase_request_line_make_purchase_order"/>
		<field name="arch" type="xml">
            <xpath expr="//field[@name='supplier_id']" position="after">
                <field name="is_engineering" invisible="1" force_save="1"/>
            </xpath>
            <xpath expr="//field[@name='section']" position="after">
                <field name="is_engineering" invisible="1" force_save="1"/>
                <field name="finish_good_id" attrs="{'column_invisible': ['|', ('parent.project', '=', False), ('parent.is_engineering', '=', False)]}"/>
            </xpath>
		</field>
    </record>
</odoo>