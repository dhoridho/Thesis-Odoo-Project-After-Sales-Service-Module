<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="job_estimate_cascade_bom_engineering_form" model="ir.ui.view">
        <field name="name">job.estimate.cascade.view.engineering.form</field>
        <field name="model">job.cascade.wizard</field>
        <field name="arch" type="xml">
            <form string="BOM cascade wizard">
                <sheet>
                    <group>
                        <group>
                            <field name="company_id" invisible="1" force_save="1"/>
                            <field name="project_id" readonly="1" force_save="1"/>
                            <field name="hide_cost_sheet" invisible="1" force_save="1"/>
                            <field name="hide_job_estimate" invisible="1" force_save="1"/>
                            <field name="job_estimate_id" readonly="1" force_save="1" attrs="{'invisible':[('hide_job_estimate', '=', True)]}"/>
                            <field name="cost_sheet" readonly="1" force_save="1" attrs="{'invisible':[('hide_cost_sheet', '=', True)]}"/>
                            <field name="undo_cascade" invisible="1" force_save="1"/> 
                        </group>
                    </group>
                    <group>
                        <field name="job_cascade_line_ids" widget="one2many_list">
                            <tree string="To Manufacture" editable="bottom" create="false" delete="false">
                                <field name="sequence" invisible="1"/>
                                <field name="sr_no" invisible="1"/>
                                <field name="is_active"/>
                                <field name="to_manuf_line_id" invisible="1"/>  
                                <field name="cost_manuf_line_id" invisible="1"/>                                    
                                <field name="project_scope" readonly="1" force_save="1"/>
                                <field name="section_name" readonly="1" force_save="1"/>
                                <field name="final_finish_good_id" readonly="1" force_save="1"/>
                                <field name="finish_good_id" readonly="1" force_save="1"/>
                                <field name="finish_good_id_template" readonly="1" force_save="1"/>
                                <field name="bom_id" readonly="1" force_save="1"/>
                                <field name="product_qty" readonly="1" force_save="1"/>
                                <field name="is_child" readonly="1" force_save="1"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button name="cascade_button" string="Confirm" type="object" class="oe_highlight"
                                attrs="{'invisible':[('undo_cascade', '=', True)]}"/>
                        <button name="undo_button" string="Confirm Undo" type="object" class="oe_highlight"
                                attrs="{'invisible':[('undo_cascade', '=', False)]}"/>
                        <button special="cancel" string="Cancel" class="oe_link"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>