<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree view -->
    <record id="mrp_plan_form_tree_engineering_inherit" model="ir.ui.view">
        <field name="name">MRP Plan Tree Engineering Inherit</field>
        <field name="model">mrp.plan</field>
        <field name="inherit_id" ref="equip3_manuf_operations.mrp_plan_form_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="before">
                <field name="project_id"/>
            </xpath>
        </field>
    </record>

    <!-- Form View -->
    <record id="mrp_plan_engineering_form_view_inherit" model="ir.ui.view">
        <field name="name">mrp.plan.engineering.form.view.inherit</field>
        <field name="model">mrp.plan</field>
        <field name="inherit_id" ref="equip3_manuf_operations.mrp_plan_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="project_id"/>
                <field name="contract" force_save="1"
                    attrs="{'invisible': [('project_id', '=', False)], 'required': [('project_id', '!=', False)]}"/>
                <field name="cost_sheet" force_save="1" readonly="1"
                    attrs="{'invisible': [('project_id', '=', False)], 'required': [('project_id', '!=', False)]}"/>
                <field name="project_budget" force_save="1"
                    attrs="{'invisible': [('project_id', '=', False)]}"/>
                <field name="budgeting_method"
                    attrs="{'invisible': [('project_id', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>