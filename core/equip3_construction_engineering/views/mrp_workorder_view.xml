<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_workorder_engineering_tree_editable_view_inherit_contd" model="ir.ui.view">
        <field name="name">mrp.workorder.engineering.tree.editable.view.inherit.contd</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="equip3_manuf_operations.mrp_workorder_tree_editable_view_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='workorder_id']" position="before">
                <field name="project_id"/>
                <field name="contract"/>
            </xpath>
            <xpath expr="//field[@name='workcenter_id']" position="before">
                <field name="weightage" string="Weightage (%)"/>
            </xpath>
        </field>
    </record>

    <record id="mrp_production_workorder_engineering_form_view_inherit_contd" model="ir.ui.view">
        <field name="name">mrp.production.workorder.engineering.form.view.inherit.contd</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="equip3_manuf_operations.equip3_mrp_production_workorder_form_view_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='mrp_plan_id']" position="before">
                <field name="project_id"/>
                <field name="contract"
                    attrs="{'invisible': [('project_id', '=', False)], 'required': [('project_id', '!=', False)]}"/>
                <field name="job_order"
                    attrs="{'invisible': [('project_id', '=', False)], 'required': [('project_id', '!=', False)]}"/>
                <field name="project_scope" invisible="1" force_save="1"/>
                <field name="section_name" invisible="1" force_save="1"/>
                <field name="variable_ref" invisible="1" force_save="1"/>
                <field name="final_finish_good_id" invisible="1" force_save="1"/>
                <field name="cs_manufacture_id" readonly="1" force_save="1"/>
                <field name="bd_manufacture_id" readonly="1" force_save="1"/>
                <field name="progress_start" invisible='1'/>
            </xpath>
            <xpath expr="//field[@name='workcenter_id']" position="before">
                <field name="weightage" string="Weightage (%)"/>
            </xpath>
        </field>
    </record>
</odoo>