<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_consumption_engineering_form" model="ir.ui.view">
        <field name="name">mrp.consumption.engineering.form</field>
        <field name="model">mrp.consumption</field>
        <field name="inherit_id" ref="equip3_manuf_operations_contd.mrp_consumption_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='consumption_details']/group/field[@name='product_use_expiration_date']" position="after">
                <field name="project_id" force_save="1" readonly='1'/>
                <field name="contract" force_save="1" readonly='1'
                    attrs="{'invisible': [('project_id', '=', False)]}"/>
                <field name="cost_sheet" force_save="1" readonly="1"
                    attrs="{'invisible': [('project_id', '=', False)]}"/>
                <field name="project_budget" 
                    attrs="{'invisible': [('project_id', '=', False)]}"/>
                <field name="budgeting_method"
                    attrs="{'invisible': [('project_id', '=', False)]}"/>
                <field name="job_order" force_save="1" readonly='1'
                    attrs="{'invisible': [('project_id', '=', False)]}"/>
                <field name="project_scope"
                    attrs="{'invisible': [('project_id', '=', False)]}"/>
                <field name="section_name"
                    attrs="{'invisible': [('project_id', '=', False)]}"/>
                <field name="variable_ref"
                    attrs="{'invisible': [('project_id', '=', False)]}"/>
                <field name="final_finish_good_id"
                    attrs="{'invisible': [('project_id', '=', False)]}"/>
                <field name="cs_manufacture_id" invisible="1" force_save="1"/>
                <field name="bd_manufacture_id" invisible="1" force_save="1"/>
                <field name="progress_start" invisible="1" force_save="1"/>
            </xpath>
        </field>
    </record>
</odoo>