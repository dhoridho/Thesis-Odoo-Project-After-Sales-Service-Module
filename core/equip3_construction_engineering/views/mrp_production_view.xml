<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add Group By-->   
    <record id="view_mrp_production_engineering_filter" model="ir.ui.view">
        <field name="name">mrp.production.select.engineering</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.view_mrp_production_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='todo']" position="after">
                <filter string="project" name="project_id" domain="[]" context="{'group_by': 'project_id'}"/>
            </xpath>
        </field>
    </record>

    <!-- Tree view -->
    <record id="mrp_production_tree_view_engineering_inherit" model="ir.ui.view">
        <field name="name">mrp.production.tree.engineering</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="project_id"/>
            </xpath>
        </field>
    </record>

    <!-- Form view -->
    <record model="ir.ui.view" id="equip3_mrp_production_engineering_form_view">
        <field name="name">mrp.production.engineering.form.view</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="before">
                <field name="project_id"/>
                <field name="contract"
                    attrs="{'invisible': [('project_id', '=', False)], 'required': [('project_id', '!=', False)]}"/>
                <field name="cost_sheet"
                    attrs="{'invisible': [('project_id', '=', False)], 'required': [('project_id', '!=', False)]}"/>
                <field name="project_budget"
                    attrs="{'invisible': [('project_id', '=', False)]}"/>
                <field name="budgeting_method"
                    attrs="{'invisible': [('project_id', '=', False)]}"/>
                <field name="job_order"
                    attrs="{'invisible': [('project_id', '=', False)]}"/>
                <field name="project_scope" invisible="1" force_save="1"/>
                <field name="section_name" invisible="1" force_save="1"/>
                <field name="variable_ref" invisible="1" force_save="1"/>
                <field name="final_finish_good_id" invisible="1" force_save="1"/>
                <field name="cs_manufacture_id" invisible="1" force_save="1"/>
                <field name="bd_manufacture_id" invisible="1" force_save="1"/>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_job_order_cons" type="object" class="oe_stat_button" icon="o-hm-smart-construction-job-order"
                        attrs="{'invisible' : [('job_order', '=', False)]}">
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_text">Job Order</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</odoo>