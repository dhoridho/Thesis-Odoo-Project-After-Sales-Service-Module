<odoo>
    <data>
        <record id="view_purchase_request_engineering_form" model="ir.ui.view">
            <field name="name">view.purchase.request.engineering.form.purchase.request</field>
            <field name="model">purchase.request</field>
            <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='project']" position="after">
                    <field name="is_engineering" readonly="1" force_save="1"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']//tree/field[@name='variable']" position="after">
                    <field name="finish_good_id" force_save="1" attrs="{'column_invisible': [('parent.is_engineering', '=', False)]}"/>
                </xpath>
                <xpath expr="//field[@name='variable_line_ids']//tree/field[@name='variable']" position="after">
                    <field name="finish_good_id" force_save="1" attrs="{'column_invisible': [('parent.is_engineering', '=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>