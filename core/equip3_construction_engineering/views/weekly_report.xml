<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- tree view -->
    <record id="project_progress_report_view_tree_inherit" model="ir.ui.view">
        <field name="name">Project Progress Report Inherit</field>
        <field name="model">project.progress.report</field>
        <field name="inherit_id" ref="equip3_construction_reports.project_progress_report_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='contract_id']" position="after">
                <field name="construction_type"/>
            </xpath>
        </field>
    </record>

    <record id="project_progress_report_view_form_inherit" model="ir.ui.view">
        <field name="name">Project Progress Report Inherit</field>
        <field name="model">project.progress.report</field>
        <field name="inherit_id" ref="equip3_construction_reports.project_progress_report_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tag_ids']" position="before">
                <field name="construction_type"/>
            </xpath>

            <xpath expr="//notebook/page[@name='usage']" position="after">
                <page name="record" string="Production Record">
                    <field name="production_history_ids" force_save="1" readonly="1" >
                        <tree>
                            <field name="production_record" invisible="1"/>
                            <field name="sequence" widget="handle" invisible="1"/>
                            <field name="sr_no"/>
                            <field name="created_on"/>
                            <field name="record_id"/>
                            <field name="finished"/>
                            <field name="rejected"/>
                            <field name="uom_id"/>
                            <field name="status" />
                            <field name="project_id" invisible="1"/>
                            <field name="contract_id" invisible="1"/>
                            <field name="report_start_date" invisible="1"/>
                            <field name="report_end_date" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="branch_id" invisible="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>
            
        </field>
    </record>

</odoo>