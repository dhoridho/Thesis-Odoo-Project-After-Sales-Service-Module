<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add Field Project & Job Cost Sheet-->
    <record id="material_request_engineering_form_view_inherited" model="ir.ui.view">
        <field name="name">material.request.engineering.form.view.inherited</field>
        <field name="model">material.request</field>
        <field name="inherit_id" ref="equip3_inventory_operation.material_request_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='project']" position="after">
                <field name="is_engineering" readonly="1"/>
            </xpath>
            <xpath expr="//field[@name='variable']" position="after">
                <field name="finish_good_id" force_save="1" attrs="{'column_invisible': [('parent.is_engineering', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>