<odoo>
    <data>

   
        <record id="hash_project_construction_engineering_form" model="ir.ui.view">
            <field name="name">project.project.engineering.inherited</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_states']" position="after">
                    <field name="construction_type" attrs="{'readonly': [('primary_states', '!=', 'draft')], 'invisible': [('department_type', '=', 'department')]}"/>
                </xpath>
                <xpath expr="//field[@name='department_type']" position="attributes">
                    <attribute name="attrs">{'invisible':[('construction_type','=','engineering')], 'readonly':[('primary_states', '!=', 'draft')]}</attribute>
                </xpath>
            </field>
        </record>

        <record id="edit_view_project_tree" model="ir.ui.view">
            <field name="name">edit.view.project.tree</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='project_director']" position='after'>
                    <field name="construction_type"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>