<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="pos_payment_edc_form" model="ir.ui.view">
        <field name="name">pos.payment.edc.form</field>
        <field name="model">pos.payment.edc</field>
        <field name="arch" type="xml">
            <form create="0" edit="0" delete="0">
                <header></header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="edc_type" readonly="1"/>
                            <field name="payment_state" readonly="1"/>
                            <field name="payment_type" readonly="1"/>
                        </group>
                        <group>
                            <field name="pos_order_id" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="others" string="Others Information">
                            <group>
                                <group>
                                     <field name="company_id" readonly="1"/>
                                      <field name="pos_branch_id" readonly="1"/>
                                    <field name="version" readonly="1"/>
                                    <field name="trans_type" readonly="1"/>
                                    <field name="trans_amount" readonly="1"/>
                                    <field name="other_amount" readonly="1"/>
                                    <field name="pan" readonly="1"/>
                                    <field name="expiry_date" readonly="1"/>
                                    <field name="resp_code" readonly="1"/>
                                    <field name="rrn" readonly="1"/>
                                    <field name="approval_code" readonly="1"/>
                                    <field name="date" readonly="1"/>
                                    <field name="time" readonly="1"/>
                                    <field name="merchant_id" readonly="1"/>
                                    <field name="terminal_id" readonly="1"/>
                                    <field name="offline_flag" readonly="1"/>
                                </group>
                                <group>
                                    <field name="cardholder_name" readonly="1"/>
                                    <field name="pan_cashier_card" readonly="1"/>
                                    <field name="invoice_number" readonly="1"/>
                                    <field name="batch_number" readonly="1"/>
                                    <field name="issuer_id" readonly="1"/>
                                    <field name="installment_flag" readonly="1"/>
                                    <field name="dcc_flag" readonly="1"/>
                                    <field name="reedem_flag" readonly="1"/>
                                    <field name="info_amount" readonly="1"/>
                                    <field name="dcc_decimal_place" readonly="1"/>
                                    <field name="dcc_currency_name" readonly="1"/>
                                    <field name="dcc_exchange_rate" readonly="1"/>
                                    <field name="coupon_flag" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pos_payment_edc_tree" model="ir.ui.view">
        <field name="name">pos.payment.edc.tree</field>
        <field name="model">pos.payment.edc</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0">
                <field name="create_date"/>
                <field name="name"/>
                <field name="order_number"/>
                <field name="invoice_number"/>
                <field name="company_id" optional="show"/>
                <field name="pos_branch_id" optional="show"/>
                <field name="payment_state"/>
            </tree>
        </field>
    </record>

    <record id="pos_payment_edc_search" model="ir.ui.view">
        <field name="name">pos.payment.edc.filter</field>
        <field name="model">pos.payment.edc</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="pos_payment_edc_action">
        <field name="name">EDC Payments</field>
        <field name="res_model">pos.payment.edc</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem 
        id="pos_payment_edc_menu"
        name="EDC Payments"
        action="pos_payment_edc_action"
        parent="point_of_sale.menu_point_of_sale"
        groups="equip3_pos_masterdata.group_pos_supervisor,equip3_pos_masterdata.group_pos_manager,equip3_pos_masterdata.group_pos_staff,equip3_pos_masterdata.group_pos_cashier,equip3_pos_masterdata.group_pos_waiter"
        sequence="4"/>


</odoo>
