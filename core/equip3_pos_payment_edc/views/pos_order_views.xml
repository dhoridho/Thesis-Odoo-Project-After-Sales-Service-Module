<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record id="view_pos_pos_form_inherit" model="ir.ui.view">
        <field name="name">view.pos.pos.form.inherit</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook//page[@name='payments']//field[@name='payment_method_id']" position="after">
                <field name="is_payment_edc" string="Payment EDC"/>
                <field name="approval_code"/>
                <field name="installment_tenor" optional="show"/>
                <field name="installment_amount" optional="show"/>
            </xpath>
        </field>
    </record>

</odoo>