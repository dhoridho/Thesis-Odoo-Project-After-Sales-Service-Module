<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	
    <record id="pos_payment_method_view_form_inherit" model="ir.ui.view">
        <field name="name">pos.payment.method.view.form.inherit</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="is_edc_bca"/>
                <field name="is_edc_manual_input" attrs="{ 'invisible': [('is_payment_edc','=',False)]}"/>
                <field name="is_payment_edc" invisible="1"/>
                <field name="edc_port" attrs="{ 'invisible': [('is_payment_edc','=',False)], 'required': [('is_payment_edc','=',True)],}"/>
                <field name="trans_type" attrs="{ 'invisible': [('is_payment_edc','=',False)], 'required': [('is_payment_edc','=',True)],}"/>
                <field name="installment_plan" invisible="1"/>
                <field name="installment_tenor_ids" widget="many2many_tags" attrs="{ 'invisible': ['|',('is_payment_edc','=',False), ('trans_type','!=', 'credit_card')], }"/>
            </field>
        </field>
    </record>

</odoo>