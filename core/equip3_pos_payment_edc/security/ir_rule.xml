<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="rule_pos_payment_edc_cashier" model="ir.rule">
            <field name="name">Rule pos_payment_edc cashier</field>
            <field name="model_id" ref="model_pos_payment_edc"/>
            <field name="domain_force">[('pos_order_id.config_id.screen_type','in',['cashier','takeaway'])]</field>
            <field name="groups" eval="[(6, 0, [ref('equip3_pos_masterdata.group_pos_cashier')])]"/>
        </record>

        <record id="rule_pos_payment_edc_waiter" model="ir.rule">
            <field name="name">Rule pos_payment_edc waiter</field>
            <field name="model_id" ref="model_pos_payment_edc"/>
            <field name="domain_force">[('pos_order_id.config_id.screen_type','in',['waiter'])]</field>
            <field name="groups" eval="[(6, 0, [ref('equip3_pos_masterdata.group_pos_waiter')])]"/>
        </record>


    </data>
</odoo>
