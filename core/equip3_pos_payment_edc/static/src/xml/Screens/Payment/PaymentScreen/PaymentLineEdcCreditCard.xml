<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="PaymentLineEdcCreditCard" owl="1">
        <tr class="receipt-line tr-payment-edc payment-edc-credit-card" t-att-data-res_id="props.line.cid">
            <td colspan="3" class="td-payment-edc">
                <div class="payment-edc">
                    <div class="payment-edc-actions">
                        <t t-if="props.line.payment_edc_state != 'paid'">
                            <div class="btn-payment-edc btn-payment-edc-send" t-on-click="sendRequest(props.line)">
                                <span>Send Request</span>
                            </div>
                            <t t-if="props.line.payment_method.is_edc_manual_input">
                                <span style="padding:0 15px;"> or </span>
                                <EdcManualInputCode line="props.line"/>
                            </t>
                        </t>
                        <t t-if="props.line.payment_edc_state == 'paid'">
                            <div class="btn-payment-edc btn-payment-edc-paid">
                                <span>Paid</span>
                            </div>
                        </t>
                    </div>
                    <div class="payment-edc-label" t-if="getInstallmentTenor(props.line)">
                        Tenor: <span><t t-esc="getInstallmentTenor(props.line)"/> months</span>
                    </div>
                </div>
            </td>
        </tr>
    </t>

</templates>