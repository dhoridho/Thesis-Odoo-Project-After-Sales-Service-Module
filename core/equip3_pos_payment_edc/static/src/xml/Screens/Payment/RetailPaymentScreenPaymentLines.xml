<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="RetailPaymentScreenPaymentLinesExt" t-inherit="equip3_pos_masterdata.RetailPaymentScreenPaymentLines" t-inherit-mode="extension" owl="1">
        <xpath expr="//tr[hasclass('tr-payment-line')]" position="attributes">
            <attribute name="t-att-payment-edc">line.payment_method.is_payment_edc</attribute>
        </xpath>
        <xpath expr="//tr[hasclass('tr-payment-line')]" position="after">
            <PaymentLineEdc line="line" t-if="line.payment_method.is_payment_edc and line.payment_method.trans_type == 'card'"/>
            <PaymentLineEdcQris line="line" t-if="line.payment_method.is_payment_edc  and line.payment_method.trans_type == 'qris'"/>
            <PaymentLineEdcCreditCard line="line" t-if="line.payment_method.is_payment_edc  and line.payment_method.trans_type == 'credit_card'"/>
        </xpath>
    </t>

</templates>
