<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="EdcBcaPopup" owl="1">
        <div role="dialog" class="modal-dialog">
            <div class="popup popup-confirm edc-bca-popup">
                <header class="title drag-handle">
                    <t t-esc="props.title"/>
                </header>
                <main class="body">
                    <div style="min-height:150px; padding:30px 0;">
                        <div style="width:70%;">
                            <div style="display:flex; align-items:center;">
                                <strong style="flex: 0 0 150px;">Url</strong>
                                <input type="text" name="url" required="1" value="http://localhost:8100/edc"/>
                            </div>
                        </div> 
                    </div>
                </main>
                <footer class="footer">
                    <div class="button confirm" t-on-click="confirm">
                        Sent Data
                    </div>
                    <div class="button cancel" t-on-click="cancel">
                        Close
                    </div>
                </footer>
            </div>
        </div>
    </t>


    <t t-name="ConfirmPopupEdcBcaApprovalCode" owl="1">
        <div role="dialog" class="modal-dialog">
            <Draggable>
                <div class="popup popup-confirm ConfirmPopupEdcBcaApprovalCode">
                    <header class="title drag-handle">
                        <t t-esc="props.title" />
                    </header>
                    <main class="body">
                       <input type="text" name="approval_code" oninput="this.value = this.value.toUpperCase()" pattern="[a-zA-Z0-9\s]+"/>
                    </main>
                    <footer class="footer">
                        <div class="button confirm" t-on-click="confirm">
                            Ok
                        </div>
                        <div class="button cancel" t-on-click="cancel">
                            Cancel
                        </div>
                    </footer>
                </div>
            </Draggable>
        </div>
    </t>

</templates>

