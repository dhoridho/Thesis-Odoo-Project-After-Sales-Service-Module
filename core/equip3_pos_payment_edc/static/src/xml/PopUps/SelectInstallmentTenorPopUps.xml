<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="SelectInstallmentTenorPopUps" owl="1">
        <div role="dialog" class="modal-dialog">
            <div class="popup popup-confirm edc-popup-cc">
                <header class="title drag-handle">
                    Installment Information
                </header>
                <main class="body">
                    <div>
                        <div class="payment-edc-field">
                            <div class="payment-edc-field-label">Installment Tenor</div>
                            <div class="payment-edc-field-form">
                                <select name="value">
                                    <t t-foreach="get_value_options()" t-as="o">
                                        <option t-att-value="o.value" t-att-data-id="o.id"><t t-esc="o.name"/></option>
                                    </t>
                                </select>
                            </div>
                        </div>
                    </div>
                </main>
                <footer class="footer">
                    <div class="button cancel" t-on-click="cancel">
                        Cancel
                    </div>
                    <div class="button confirm" t-on-click="confirm">
                        Save
                    </div>
                </footer>
            </div>
        </div>
    </t>

</templates>

