<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="barcode_labels_inherit_view_form" model="ir.ui.view">
        <field name="name">barcode.labels.inherit.view.form</field>
        <field name="model">barcode.labels</field>
        <field name="inherit_id" ref="dynamic_barcode_labels.view_barcode_labels"/>
        <field name="arch" type="xml">
            <xpath expr="//form//tree/field[@name='qty']" position="before">
                <field name="is_multi_barcode" invisible="1"/>
                <field name="barcode" 
                       options="{'no_create_edit': True, 'no_create': True}"
                       attrs="{'invisible': [('is_multi_barcode', '=', False)], 
                               'required': [('is_multi_barcode', '=', True)]}"/>
            </xpath>
        </field>
    </record>
</odoo>