<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_form_res_setting_inherit" model="ir.ui.view">
        <field name="name">res.config.setting.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale_stock.res_config_settings_view_form_stock"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='production_lot_info']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="lot_serial_no_management" attrs="{'invisible': [('group_stock_production_lot', '=', False)]}">
                    <div class='o_setting_left_pane'>
                        <field name="lot_serial_no_manage"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="lot_serial_no_manage"/>
                        <div class="text-muted">
                            Auto Serialize Each Products when receiving based on Categories
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>