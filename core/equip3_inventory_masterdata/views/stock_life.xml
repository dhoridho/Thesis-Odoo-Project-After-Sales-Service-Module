<odoo>
    <data>
        <record id="stock_life_tree_view" model="ir.ui.view">
            <field name="name">Stock Life</field>
            <field name="model">stock.life</field>
            <field name="arch" type="xml">
                <tree create="true" editable="bottom">
                    <field name="category_ids" widget="many2many_tags"
                            attrs="{'readonly': [('product_id_len', '=', True)]}" width="150"/>
                    <field name="product_ids" widget="many2many_tags"
                            attrs="{'readonly': [('category_id_len', '=', True)]}" width="100"/>
                    <field name="restrict_product" required="1" width="75"/>
                    <field name="minimum_days" required="1" width="75"/>
                    <field name="is_customer" required="1" width="100"/>
                    <!-- <field name="branch_ids" widget="many2many_tags"/> -->
                    <field name="product_id_len" invisible="1"/>
                    <field name="category_id_len" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="stock_life_action" model="ir.actions.act_window">
            <field name="name">Stock Life</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.life</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem name="Stock Life"
                  id="menu_stock_life"
                  action="stock_life_action"
                  parent="stock.menu_warehouse_config"
                  sequence="32"
        />


    </data>
</odoo>