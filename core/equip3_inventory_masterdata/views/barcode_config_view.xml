<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- barcode.configuration inherit form view -->
        <record id="barcode_configuration_inventory_masterdata" model="ir.ui.view">
            <field name="name">barcode.configuration.inherit.inventory.masterdata</field>
            <field name="model">barcode.configuration</field>
            <field name="inherit_id" ref="dynamic_barcode_labels.barcode_config_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='barcode_type']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>