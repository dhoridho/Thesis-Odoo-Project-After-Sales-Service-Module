<odoo>
    <data>
        <record id="product_brand_form_view" model="ir.ui.view">
            <field name="name">Product Brand</field>
            <field name="model">product.brand</field>
            <field name="inherit_id" ref="equip3_general_features.product_brand_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/field[@name='brand_name']" position="after">
                    <field name ="short_name" required='1'/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>