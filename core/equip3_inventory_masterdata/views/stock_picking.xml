<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_picking_inherit_view_tree" model="ir.ui.view">
        <field name="name">Stock Picking Tree</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="default_order">id desc</attribute>
            </xpath>
            <xpath expr="//field[@name='company_id']" position="attributes">
                <attribute name="groups">base.group_multi_company</attribute>
            </xpath>
        </field>
    </record>

    <record id="stock_move_inherit_view_form" model="ir.ui.view">
        <field name="name">Stock Move Form</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="delivery.view_picking_withweight_internal_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='weight']" position="after">
                <field name="length"/>
                <field name="width"/>
                <field name="height"/>
            </xpath>
        </field>
    </record>

    <record id="inherit_stock_picking_form_view_masterdata" model="ir.ui.view">
        <field name="name">stock.picking.form.view.inherit.masterdata</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="branch.view_picking_form_inherit_branch"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='branch_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='location_id']" position="before">
                <field name="branch_id"/>
            </xpath>
        </field>
    </record>

    <record id="view_picking_internal_search_inherit" model="ir.ui.view">
        <field name="name">stock.picking.internal.search.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="company_id" groups="base.group_multi_company"/>
            </xpath>
        </field>
    </record>

</odoo>
