<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ir_cron_temporary_update_prefix" model="ir.cron">
        <field name="name">Temporary Update Prefix Operations Type</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
        <field name="nextcall" eval="datetime.now() + (datetime.now(pytz.timezone('Asia/Jakarta')).replace(hour=1, minute=0, second=0) - datetime.now(pytz.timezone('Asia/Jakarta'))) % timedelta(hours=24)"/>
        <field name="model_id" ref="model_stock_location"/>
        <field name="code">model.action_update_operation_type()</field>
        <field name="state">code</field>
    </record>
</odoo>
