<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="ProductForecastFilters">
        <div class="o_product_forecast_cp o_use_widgets">
            <div class="o_product_forecast_controller">
                <div class="o_filter_warehouse_id mr-3">
                    <div class="o_field_label">Warehouse</div>
                </div>
                <div class="o_filter_product_ids">
                    <div class="o_field_label">Products</div>
                </div>
                <div class="o_buttons">
                    <button class="btn btn-primary o_report_replenish d-none" type="button" title="Replenish">Replenish</button>
                </div>
            </div>
        </div>
    </t>

    <t t-name="ProductForecast">
        <div class="o_product_forecast">
            <div class="o_product_forecast_content">
                <iframe class="o_report_iframe d-none"/>
            </div>
        </div>
    </t>

    <t t-name="ProductForecastNoContent">
        <div class="o_view_nocontent">
            <div class="o_nocontent_help">
                <p class="o_view_nocontent_empty_folder">No data to display</p>
                <p>Try to change the warehouse or product.</p>
		    </div>
        </div>
    </t>


</templates>