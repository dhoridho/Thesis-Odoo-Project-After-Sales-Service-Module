<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <menuitem id="abs_construction_management.construction_management"
        name="Construction"
        web_icon="equip3_construction_masterdata,static/src/img/CONSTRUCTION.png"/>

    <record id="abs_construction_management.construction_management" model="ir.ui.menu">
        <field name="equip_category_id" ref="equip3_hashmicro_ui.category_operations"/>
    </record>

    <record id="abs_construction_management.menu_job_costs" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-main-construction-cost-sheet</field>
    </record>

    <record id="abs_construction_management.menu_projects" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-parent-construction-project</field>
    </record>

    <record id="abs_construction_management.menu_job_order" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-parent-construction-job-orders</field>
    </record>

    <record id="abs_construction_management.menu_Equipments" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-parent-construction-equipment</field>
    </record>

    <record id="abs_construction_management.menu_materials" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-parent-construction-materials</field>
    </record>

    <record id="abs_construction_management.menu_configuration" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-parent-construction-configuration</field>
            <field name="groups_id" eval="[(6, 0, [ref('abs_construction_management.group_construction_user')])]"/>
        
    </record>

</odoo>
