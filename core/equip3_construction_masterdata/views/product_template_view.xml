<?xml version="1.0"?>
<odoo>
    <data>

        <record id="construction_product_template_only_form_view" model="ir.ui.view">
            <field name="name">construction.product.template.only.form.view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_information']/group/group/field[@name='product_type_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//page[@name='general_information']/group/group/field[@name='categ_id']" position="before">
                    <field name="service_category" invisible="1"/>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Construction" name="construction">
                        <group name="group_of_product" string="Group of Product">
                            <field name="group_of_product" widget="many2many_tags"/>
                        </group>
                    </page>
                </xpath>
            </field> 
        </record>

        <record id="product_normal_form_view_inherited_2" model="ir.ui.view">
            <field name="name">product.product.form.inherit2</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="abs_construction_management.product_normal_form_view_inherited"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_type_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                    <attribute name="required">0</attribute>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Construction" name="construction">
                        <group name="group_of_product" string="Group of Product">
                            <field name="group_of_product" widget="many2many_tags"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
