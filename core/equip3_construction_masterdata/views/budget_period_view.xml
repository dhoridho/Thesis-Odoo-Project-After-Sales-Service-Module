<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- Budget Period Form View -->
        <record id="view_budget_period_menu_form" model="ir.ui.view">
            <field name="name">budget.period.form</field>
            <field name="model">project.budget.period</field>
            <field name="arch" type="xml">
                <form string="Budget Periode">
                    <header>
                        <button string="Create Period" name="action_create_period" attrs="{'invisible':[('is_hide_create_month','=',True)]}" type="object" class="oe_highlight"/>
                        <button string="Open Period" name="action_open" attrs="{'invisible':[('is_hide_open_period','=',True)]}" type="object" class="oe_highlight"/>
                        <button string="Close Period" name="action_closed" attrs="{'invisible':[('is_hide_close_period','=',True)]}" type="object" class="oe_highlight"/>
                        <button string="Reset to Draft" name="action_reset" attrs="{'invisible':[('state','in',['draft','open'])]}" type="object" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,open,closed"/>
                    </header>
                    <sheet>
                        <group>
                            <group>              
                                <field name="name" required="1" attrs="{'readonly':[('state','in',['open', 'closed'])]}"/>    
                                <field name="project" attrs="{'readonly':[('state','in',['open', 'closed'])]}" required="1"/>                
                                <field name="start_date" required="1" attrs="{'readonly':[('state','in',['open', 'closed'])]}"/>
                                <field name="end_date" required="1" attrs="{'readonly':[('state','in',['open', 'closed'])]}"/>
                                <field name="company" readonly="1"/>
                                <field name="department_type" invisible="1"/>
                                <field name="branch_id" required="1"/>
                                <field name="is_hide_create_month" invisible="1" />
                                <field name="is_hide_open_period" invisible="1"/>
                                <field name="is_hide_close_period" invisible="1"/>
                            </group>
                            <group>              
                                <field name="create_uid" string='Created By'/>
                                <field name="create_date" string='Creation Date'/>
                            </group>
                        </group>
                        <notebook>
                            <page name="monthly_periods" string="Monthly Periods">
                                <field name="budget_period_line_ids" class="o_monthly_periods_line" readonly="1">
                                    <tree editable="bottom"> 
                                        <field name="line_project_ids" invisible="1"/>                       
                                        <field name="year"/>  
                                        <field name="month"/>                   
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                        <field name="state"/>                                    
                                    </tree>
                                    <form>                    
                                        <field name="year"/>  
                                        <field name="month"/>                   
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                        <field name="state"/>  
                                    </form>                    
                                </field>                                   
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Budget Period tree View -->
        <record id="view_budget_period_menu_tree" model="ir.ui.view">
            <field name="name">budget.period.tree</field>
            <field name="model">project.budget.period</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="PERIOD NAME"/>
                    <field name="start_date" string="START DATE"/>
                    <field name="end_date" string="END DATE"/>
                    <field name="state" string="STATUS" widget="badge" 
                        decoration-primary="state == 'draft'" 
                        decoration-primary2="state == 'open'" 
                        decoration-danger="state == 'closed'"/>
                </tree>
            </field>
        </record>

        <!-- Budget Period Action -->
        <record id="budget_period_action_const_management" model="ir.actions.act_window">
            <field name="name">Budget Period</field>
            <field name="res_model">project.budget.period</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('department_type', '=', 'project')]</field>
            <field name="context">{'default_department_type': 'project'}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Budget Period found, Let's create one!
                </p>
            </field>
        </record>

        <!-- Budget Period Menu -->
        <menuitem id = "budget_period_sub_menu_const_management"
            name     = "Budget Period"
            parent   = "abs_construction_management.menu_configuration"
            action   = "budget_period_action_const_management"
            sequence = "5"/>   
    
        <record model='ir.ui.menu' id='budget_period_sub_menu_const_management'>
            <field name="groups_id" eval="[(6, 0, [ref('abs_construction_management.group_construction_manager')])]"/>
        </record>

    </data>
</odoo>