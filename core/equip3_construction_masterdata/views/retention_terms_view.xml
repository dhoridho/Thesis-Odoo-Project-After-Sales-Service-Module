<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_retention_term_form" model="ir.ui.view">
            <field name="name">view.retention.term.form</field>
            <field name="model">retention.term</field>
            <field name="arch" type="xml">
                <form string="Payment Terms">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="days"/>
                            </group>
                            <group>
                                <field name="company_id"/>
                                <field name="branch_id"/>
                                <field name="create_uid" string='Created By'/>
                                <field name="create_date" string='Creation Date'/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter" name="chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_retention_term_tree" model="ir.ui.view">
            <field name="name">view.retention.term.tree</field>
            <field name="model">retention.term</field>
            <field name="arch" type="xml">
                <tree string="Retention Terms">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="company_id" invisible='1' />
                    <field name="branch_id" invisible='1' />
                </tree>
            </field>
        </record>

        <record id="action_retention_term_form" model="ir.actions.act_window">
            <field name="name">Retention Terms</field>
            <field name="res_model">retention.term</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Retention Term found. Let's create one!
                </p>
            </field>
        </record>

    </data>
</odoo>
