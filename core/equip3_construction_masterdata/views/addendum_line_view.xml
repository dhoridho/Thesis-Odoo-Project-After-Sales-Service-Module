<?xml version="1.0"?>
<odoo>
    <data>
        <!-- TODO : need to remove (not registered in manifet) -->
        <record id="addendum_line_view_inherit_construction" model="ir.ui.view">
            <field name="name">addendum.line.view.inherit.construction</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='guarantee']" position="after">
                    <page name="addendum" string="Variation Order">
                        <field name="addendum_line_ids" class="o_purchase_order_line">
                            <tree editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="sr_no" />
                                <!--<field name="project_category"/>-->
                                <!--<field name="job_type"/>-->
                                <field name="contract_amount"/>
                                <field name="down_payment"/>
                                <field name="retention_1"/>
                                <field name="retention_1_date"/>
                                <field name="retention_2"/>
                                <field name="retention_2_date"/>
                                <!--<field name="type_ppc"/>
                                <field name="start_date"/>
                                <field name="end_date"/>-->
                                <field name="payment_term"/>
                                <field name="vo_payment_type" />
                                <!--<field name="status_progress"/>-->
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>