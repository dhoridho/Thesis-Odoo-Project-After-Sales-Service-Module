<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_partner_inherit_form_view_construction" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.construction</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_title']/div[@class='o_row']" position="before">
                <div invisible='1'>
                    <field name="is_customer"/>
                    <label for="is_customer"/>
                </div>
                <div invisible='1'>
                    <field name="is_a_vendor"/>
                    <label for="is_a_vendor"/>
                </div>
                <div invisible='1'>
                    <field name="is_sub_contractor"/>
                    <label for="is_sub_contractor"/>
                </div>
                <div name="div_vendor_type" invisible='1'>
                    <group>
                        <field name="vendor_type"/>
                    </group>
                </div>
            </xpath>
            <xpath expr="//field[@name='parent_id']" position="attributes">
                <attribute name="context">{'default_is_company': True, 'show_vat': True, 'default_is_customer':
                    is_customer, 'default_is_a_vendor': is_a_vendor, 'default_is_sub_contractor': is_sub_contractor}
                </attribute>
            </xpath>
            <xpath expr="//page[@name='sales_purchases']" position="after">
                <page name="documents" string="Documents">
                    <field name='document_ids'>
                        <tree editable='top'>
                            <field name="document_type"/>
                            <field name="description"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="status"/>
                            <field name="date_published"/>
                            <field name="document_name" invisible='1'/>
                            <field name="document_upload" filename="document_name" widget="binary"/>
                        </tree>
                    </field>
                </page>
            </xpath>

            <xpath expr="//notebook" position="inside">
                <page string="Construction">
                    <group>
                        <field name="is_project_location"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

