<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <!-- tree view -->
        <record id="variable_estimate_view_tree" model="ir.ui.view">
            <field name="name">variable.template.view.tree</field>
            <field name="model">variable.template</field>
            <field name="arch" type="xml">
                <tree multi_edit="1" sample="1">
                    <field name="name" string="Variable"/>
                    <field name="variable_uom" />
                    <field name="total_variable"/>
                    <field name="company_currency_id" />
                    <field name="company_id" />
                    <field name="variable_subcon" invisible='1'/>
                </tree>
            </field>
        </record>

        <record id="subcon_estimate_view_tree" model="ir.ui.view">
            <field name="name">variable.template.view.tree</field>
            <field name="model">variable.template</field>
            <field name="arch" type="xml">
                <tree multi_edit="1" sample="1">
                    <field name="name" string="Job Subcon"/>
                    <field name="variable_uom" />
                    <field name="total_variable" string="Total Job Subcon Estimate" />
                    <field name="company_currency_id" />
                    <field name="company_id" />
                    <field name="variable_subcon" invisible='1'/>
                </tree>
            </field>
        </record>

        <!-- form view -->
        <record id="variable_estimate_view_form" model="ir.ui.view">
            <field name="name">variable.template.view.form</field>
            <field name="model">variable.template</field>
            <field name="arch" type="xml">
                <form string="Variable">
                    <sheet>
                        <div class="oe_title pr-0">
                            <h1 class="d-flex flex-row justify-content-between">
                                <field name="name" string="Variable Name" placeholder="Variable Name" class="o_task_name text-truncate" attrs="{'invisible': [('variable_subcon', '=', True)], 'required': [('variable_subcon', '=', False)]}"/>
                                <field name="name" string="Variable Name" placeholder="Job Subcon Name" class="o_task_name text-truncate" attrs="{'invisible': [('variable_subcon', '=', False)], 'required': [('variable_subcon', '=', True)]}"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="active" invisible="1"/>
                                <field name="variable_uom" />
                                <field name="company_id" />
                                <field name="company_currency_id" readonly="1"/>
                                <field name="branch_id" required="0" invisible="1"/>
                            </group>
                            <group>
                                <field name="total_variable"  widget="monetary" force_save="1" attrs="{'invisible': [('variable_subcon', '=', True)]}"/>
                                <field name="total_variable" widget="monetary" force_save="1" string="Total Job Subcon Estimate" attrs="{'invisible': [('variable_subcon', '=', False)]}"/>
                                <field name="create_uid" string='Created By'/>
                                <field name="create_date" string='Creation Date'/>
                            </group>   
                        </group>
                        <group>
                            <group>
                                <field name="variable_subcon" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="material" string="Material">
                                <field name="material_variable_ids" widget="one2many_list" class="o_variable_line">
                                    <tree editable='bottom'>
                                        <control>
                                            <create name="add_product_control" string="Add a product"/>
                                        </control>
                                        <field name="sequence" widget="handle"/>
                                        <field name="sr_no"/>
                                        <field name="company_id" invisible="1"/>
                                        <field name="group_of_product" options="{'no_create': True, 'no_quick_create':True, 'no_create_edit':True}"/>
                                        <field name="product_id" options="{'no_create': True, 'no_quick_create':True, 'no_create_edit':True}"/>
                                        <field name="description" attrs="{'readonly': [('product_id', '=', False)]}"/>
                                        <field name="quantity" attrs="{'readonly': [('product_id', '=', False)]}"/>
                                        <field name="product_uom_category_id" invisible="1"/>           
                                        <field name="uom_id" force_save="1" attrs="{'readonly': [('product_id', '=', False)]}"/>
                                        <field name="unit_price" attrs="{'readonly': [('product_id', '=', False)]}"/>
                                        <field name="subtotal" widget="monetary" force_save="1"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="total_variable_estimate">
                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                        <label for="total_variable_material" />
                                    </div>
                                    <field name="total_variable_material" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary'/>
                                </group>
                            </page>
                            <page name="labour" string="Labour">
                                <field name="labour_variable_ids" widget="one2many_list" class="o_variable_line">
                                    <tree editable='bottom'>
                                        <control>
                                            <create name="add_product_control" string="Add a product"/>
                                        </control>
                                        <field name="sequence" widget="handle"/>
                                        <field name="sr_no"/>
                                        <field name="company_id" invisible="1"/>
                                        <field name="group_of_product" options="{'no_create': True, 'no_quick_create':True, 'no_create_edit':True}"/>
                                        <field name="product_id" options="{'no_create': True, 'no_quick_create':True, 'no_create_edit':True}"/>
                                        <field name="description" attrs="{'readonly': [('product_id', '=', False)]}"/>
                                        <field name="contractors" attrs="{'readonly': [('product_id', '=', False)]}" />
                                        <field name="time" attrs="{'readonly': [('product_id', '=', False)]}" />
                                        <field name="quantity" readonly="1" force_save="1"/>
                                        <field name="product_uom_category_id" invisible="1"/>        
                                        <field name="uom_id" force_save="1" attrs="{'readonly': [('product_id', '=', False)]}"/>
                                        <field name="unit_price" attrs="{'readonly': [('product_id', '=', False)]}"/>
                                        <field name="subtotal" widget="monetary" force_save="1"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="total_variable_estimate">
                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                        <label for="total_variable_labour" />
                                    </div>
                                    <field name="total_variable_labour" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary'/>
                                </group>
                            </page>
                            <page name="service" string="Service" attrs="{'invisible': [('variable_subcon', '=', False)]}">
                                <field name="service_variable_ids" widget="one2many_list" class="o_variable_line">
                                    <tree editable='bottom'>
                                        <control>
                                            <create name="add_product_control" string="Add a product"/>
                                        </control>
                                        <field name="sequence" widget="handle"/>
                                        <field name="sr_no"/>
                                        <field name="company_id" invisible="1"/>
                                        <field name="group_of_product" options="{'no_create': True, 'no_quick_create':True, 'no_create_edit':True}"/>
                                        <field name="product_id" options="{'no_create': True, 'no_quick_create':True, 'no_create_edit':True}"/>
                                        <field name="description" attrs="{'readonly': [('product_id', '=', False)]}"/>
                                        <field name="quantity" attrs="{'readonly': [('product_id', '=', False)]}"/>
                                        <field name="product_uom_category_id" invisible="1"/>        
                                        <field name="uom_id" force_save="1" attrs="{'readonly': [('product_id', '=', False)]}"/>
                                        <field name="unit_price" attrs="{'readonly': [('product_id', '=', False)]}"/>
                                        <field name="subtotal" widget="monetary" force_save="1"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="total_variable_estimate">
                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                        <label for="total_variable_service" />
                                    </div>
                                    <field name="total_variable_service" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary'/>
                                </group>
                            </page>
                            <page name="overhead" string="Overhead">
                                <field name="overhead_variable_ids" widget="one2many_list" class="o_variable_line"> 
                                    <tree editable='bottom'>
                                        <control>
                                            <create name="add_product_control" string="Add a product"/>
                                        </control>
                                        <field name="sequence" widget="handle"/>
                                        <field name="sr_no"/>
                                        <field name="company_id" invisible="1"/>
                                        <field name="overhead_catagory" required="1" options="{'no_create': True, 'no_quick_create':True, 'no_create_edit':True}"/>
                                        <field name="group_of_product" options="{'no_create': True, 'no_quick_create':True, 'no_create_edit':True}"/>
                                        <field name="product_id" options="{'no_create': True, 'no_quick_create':True, 'no_create_edit':True}"/>
                                        <field name="description" attrs="{'readonly': [('product_id', '=', False)]}"/>
                                        <field name="quantity" attrs="{'readonly': [('product_id', '=', False)]}"/>
                                        <field name="product_uom_category_id" invisible="1"/>        
                                        <field name="uom_id" force_save="1" attrs="{'readonly': [('product_id', '=', False)]}"/>
                                        <field name="unit_price" attrs="{'readonly': [('product_id', '=', False)]}"/>
                                        <field name="subtotal" widget="monetary" force_save="1"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="total_variable_estimate">
                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                        <label for="total_variable_overhead" />
                                    </div>
                                    <field name="total_variable_overhead" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary'/>
                                </group>
                            </page>
                            <page name="equipment" string="Equipment" attrs="{'invisible': [('variable_subcon', '=', False)]}">
                                <field name="equipment_variable_ids" widget="one2many_list" class="o_variable_line">
                                    <tree editable='bottom'>
                                        <control>
                                            <create name="add_product_control" string="Add a product"/>
                                        </control>
                                        <field name="sequence" widget="handle"/>
                                        <field name="sr_no"/>
                                        <field name="company_id" invisible="1" />
                                        <field name="group_of_product" options="{'no_create': True, 'no_quick_create':True, 'no_create_edit':True}"/>
                                        <field name="product_id" options="{'no_create': True, 'no_quick_create':True, 'no_create_edit':True}"/>
                                        <field name="description" attrs="{'readonly': [('product_id', '=', False)]}"/>
                                        <field name="quantity" attrs="{'readonly': [('product_id', '=', False)]}"/>
                                        <field name="product_uom_category_id" invisible="1"/> 
                                        <field name="uom_id" force_save="1" attrs="{'readonly': [('product_id', '=', False)]}"/>
                                        <field name="unit_price" attrs="{'readonly': [('product_id', '=', False)]}"/>
                                        <field name="subtotal" widget="monetary" force_save="1"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="total_variable_estimate">
                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                        <label for="total_variable_equipment" />
                                    </div>
                                    <field name="total_variable_equipment" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary'/>
                                </group>
                            </page>
                            <page name="asset" string="Asset" attrs="{'invisible': [('variable_subcon', '=', True)]}">
                                <notebook>
                                    <page name="internal_asset" string="Internal Asset">
                                        <field name="asset_variable_ids" widget="one2many_list" class="o_variable_line">
                                            <tree string="Asset" editable="bottom">
                                                <control>
                                                    <create name="add_product_control" string="Add a asset"/>
                                                </control>
                                                <field name="sequence" widget="handle"/>
                                                <field name="sr_no"/>
                                                <field name="company_id" invisible="1"/>
                                                <field name="asset_category_id" required="1" options="{'no_create': True, 'no_quick_create':True, 'no_create_edit':True}"/>
                                                <field name="asset_id" required="1" options="{'no_create': True, 'no_quick_create':True, 'no_create_edit':True}"/>
                                                <field name="description" required="1"/>
                                                <field name="quantity" attrs="{'readonly': [('asset_id', '=', False)]}"/>
                                                <field name="uom_id" force_save="1" attrs="{'readonly': [('asset_id', '=', False)]}"/>
                                                <field name="unit_price" attrs="{'readonly': [('asset_id', '=', False)]}"/>
                                                <field name="subtotal" widget="monetary" force_save="1"/>
                                            </tree>
                                        </field>
                                        <group>
                                            <group class="oe_subtotal_footer oe_right" colspan="2" name="total_asset_variable">
                                                <field name="total_variable_internal_asset" widget='monetary' options="{'currency_field': 'currency_id'}" force_save='1'/>
                                                <field name="total_variable_equipment" widget='monetary' options="{'currency_field': 'currency_id'}" force_save='1'/>
                                                <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                                    <label for="total_variable_asset" />
                                                </div>
                                                <field name="total_variable_asset" nolabel="1" class="oe_subtotal_footer_separator"
                                                    widget='monetary' options="{'currency_field': 'currency_id'}" force_save='1'/>
                                            </group>
                                        </group>
                                    </page>
                                    <page name="equipment" string="Equipment Lease">
                                        <field name="equipment_variable_ids" widget="one2many_list" class="o_variable_line">
                                            <tree editable='bottom'>
                                                <control>
                                                    <create name="add_product_control" string="Add a product"/>
                                                </control>
                                                <field name="sequence" widget="handle"/>
                                                <field name="sr_no"/>
                                                <field name="company_id" invisible="1" />
                                                <field name="group_of_product" options="{'no_create': True, 'no_quick_create':True, 'no_create_edit':True}"/>
                                                <field name="product_id" options="{'no_create': True, 'no_quick_create':True, 'no_create_edit':True}"/>
                                                <field name="description" attrs="{'readonly': [('product_id', '=', False)]}"/>
                                                <field name="quantity" attrs="{'readonly': [('product_id', '=', False)]}"/>
                                                <field name="product_uom_category_id" invisible="1"/> 
                                                <field name="uom_id" force_save="1" attrs="{'readonly': [('product_id', '=', False)]}"/>
                                                <field name="unit_price" attrs="{'readonly': [('product_id', '=', False)]}"/>
                                                <field name="subtotal" widget="monetary" force_save="1"/>
                                            </tree>
                                        </field>
                                        <group>
                                            <group class="oe_subtotal_footer oe_right" colspan="2" name="total_asset_variable">
                                                <field name="total_variable_internal_asset" widget='monetary' options="{'currency_field': 'currency_id'}" force_save='1'/>
                                                <field name="total_variable_equipment" widget='monetary' options="{'currency_field': 'currency_id'}" force_save='1'/>
                                                <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                                    <label for="total_variable_asset" />
                                                </div>
                                                <field name="total_variable_asset" nolabel="1" class="oe_subtotal_footer_separator"
                                                    widget='monetary' options="{'currency_field': 'currency_id'}" force_save='1'/>
                                            </group>
                                        </group>
                                    </page>
                                </notebook>
                            </page>
                            <page name="subcon" string="Job Subcon" attrs="{'invisible': [('variable_subcon', '=', True)]}">
                                <field name="subcon_variable_ids" widget="one2many_list" class="o_variable_subcon">
                                    <tree editable='bottom'>
                                        <control>
                                            <create name="add_product_control" string="Add a subcon"/>
                                        </control>
                                        <field name="sequence" widget="handle"/>
                                        <field name="sr_no"/>
                                        <field name="company_id" invisible="1"/>
                                        <field name="variable" required="1"
                                               options="{'no_quick_create':True, 'no_create': True}"
                                               context="{'default_variable_subcon':True}"/>
                                        <field name="description" attrs="{'readonly': [('variable', '=', False)]}"/>
                                        <field name="quantity" attrs="{'readonly': [('variable', '=', False)]}"/>
                                        <field name="uom_id" force_save="1" attrs="{'readonly': [('variable', '=', False)]}"/>
                                        <field name="unit_price" attrs="{'readonly': [('variable', '=', False)]}"/>
                                        <field name="subtotal" widget="monetary" force_save="1"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="total_variable_estimate">
                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                        <label for="total_variable_subcon" />
                                    </div>
                                    <field name="total_variable_subcon" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary'/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter" name="chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="variable_material_view" model="ir.ui.view">
            <field name="name">variable.material.view</field>
            <field name="model">material.variable</field>
