<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--MENU [Job Orders]-->
    <menuitem id="abs_construction_management.menu_job_order"
        name = "Job Orders"
        parent = "abs_construction_management.construction_management"
        groups = "abs_construction_management.group_construction_user"
        sequence="3"/>

    <!--MENU [Job Orders]-->
    <menuitem id="abs_construction_management.menu_sub_job_order"
        name = "Job Orders"
        parent = "abs_construction_management.menu_job_order"
        action = "abs_construction_management.action_view_task_inherited"
        sequence="1"/>

    <!--ACTION [job.notes]-->
    <record id="abs_construction_management.action_view_job_notes_menu" model="ir.actions.act_window">
        <field name="name">Job Notes</field>
        <field name="res_model">job.notes</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="abs_construction_management.view_job_notes_menu_tree"/>
    </record>

    <!--MENU [Job Notes]-->
    <menuitem id="abs_construction_management.menu_sub_job_notes"
        name = "Job Notes"
        parent = "abs_construction_management.menu_job_order"
        action = "abs_construction_management.action_view_job_notes_menu"
        sequence="2"/>

    <!--Job Notes-->
    <record id="view_job_notes_menu_tree_inherit" model="ir.ui.view">
        <field name="name">job.notes.tree.inherit</field>
        <field name="model">job.notes</field>
        <field name="inherit_id" ref="abs_construction_management.view_job_notes_menu_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='task_id']" position="attributes">
                <attribute name="string">Job Order</attribute> 
            </xpath>
        </field>
    </record>

    <record id="view_job_notes_menu_form_inherit" model="ir.ui.view">
        <field name="name">job.notes.form.inherit</field>
        <field name="model">job.notes</field>
        <field name="inherit_id" ref="abs_construction_management.view_job_notes_menu_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group/group[1]/field[@name='task_id']" position="attributes">
                <attribute name="string">Job Order</attribute> 
            </xpath>
        </field>
    </record>

    <record id="view_job_notes_menu_filter_inherit" model="ir.ui.view">
        <field name="name">job.notes.select,inherit</field>
        <field name="model">job.notes</field>
        <field name="inherit_id" ref="abs_construction_management.view_job_notes_menu_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search/group/filter[@name='task_id']" position="attributes">
                <attribute name="string">Job Order</attribute> 
            </xpath>
        </field>
    </record>

    <!--  rename Asset  -->
    <record model="ir.ui.menu" id="abs_construction_management.menu_Equipments">
        <field name="name">Internal Asset</field>
    </record>

    <menuitem id="menu_approval_matrix_construction"
        name="Approval Matrix"
        parent="abs_construction_management.menu_configuration"
        sequence="7"/>

</odoo>
