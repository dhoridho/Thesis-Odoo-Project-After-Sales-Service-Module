<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_action_tree_view" model="ir.ui.view">
        <field name="name">purchase.action.tree</field>
        <field name="model">purchase.action</field>
        <field name="arch" type="xml">
            <tree string="Purchase Action Values">
                <field name="sequence" widget="handle"/>
                <field name="purchase_action_number"/>
                <field name="name" string="Purchase Action Name"/>
            </tree>
        </field>
    </record>

    <record id="purchase_action_view_form" model="ir.ui.view">
        <field name="name">purchase.action.form</field>
        <field name="model">purchase.action</field>
        <field name="arch" type="xml">
            <form string="Purchase Action">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="purchase_action_number"/>
                        <field name="type_of_mr"/>
                        <field name="analytic_group"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="products_purchase_action" model="ir.actions.act_window">
        <field name="name">Purchase Action</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.action</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Add sub menu in Module Purchase > Configuration > Products -->
    <menuitem id="purchase_menu_product_purchase_action"
              action="products_purchase_action" name="Purchase Action"
              parent="purchase.menu_product_in_config_purchase" sequence="3"/>

    <!-- Add sub menu in Module Inventory > Configuration > Products -->
    <menuitem id="inventory_menu_product_purchase_action"
              action="products_purchase_action" name="Purchase Action"
              parent="stock.menu_product_in_config_stock" sequence="2"/>

    <!-- Change Sequence from 2 to 3 -->
    <menuitem name="Brand"
              id="equip3_general_features.menu_product_brand"
              action="equip3_general_features.product_brand_action"
              parent='stock.menu_product_in_config_stock'
              sequence="3"/>
</odoo>