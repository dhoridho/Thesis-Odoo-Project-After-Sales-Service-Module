    <record id="asset_equipment_tree_view_inherited_new" model="ir.ui.view">
            <field name="name">asset.equipment.tree.view.inherited.new</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="project_id"/>
                </xpath>
            </field>
    </record>
    <record id="maintenance_equipment_form_view_inherited" model="ir.ui.view">
            <field name="name">maintenance.equipment.form.view.inherited</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="equip3_asset_fms_masterdata.inherit_equip_view_id"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='branch_id']" position="after">
                    <field name="project_id" readonly="1" force_save="1"/>
                </xpath>
            </field>
    </record>

    <record id="equip3_asset_fms_masterdata.modul_asset_action" model="ir.actions.act_window">
      <field name="name">Asset</field>
      <field name="res_model">maintenance.equipment</field>
      <field name="type">ir.actions.act_window</field>
      <field name="view_mode">tree,form,kanban</field>
      <field name="domain">[('vehicle_checkbox', '=', False)]</field>
      <field name="context">{"default_vehicle_checkbox" : False }</field>
      <field name="view_ids" eval="[(5,0,0), 
                    (0,0, {'sequence':1, 'view_mode':'tree', 'view_id':ref('equip3_asset_fms_masterdata.asset_view_tree')}),
                    (0,0, {'sequence':2, 'view_mode':'form', 'view_id':ref('equip3_asset_fms_masterdata.maintenance_asset_view_form')})]
                    " />
      <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Asset found, Let's create one!
            </p>
      </field>
    </record>

    <record id="equip3_asset_fms_masterdata.maintenance_vehicle_action" model="ir.actions.act_window">
        <field name="name">Vehicle</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">maintenance.equipment</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('vehicle_checkbox', '=', True)]</field>
        <field name="context">{"default_vehicle_checkbox" : "True for vehicle_checkbox field", }</field>
        <field name="view_ids" eval="[(5,0,0), 
                    (0,0, {'sequence':1, 'view_mode':'tree', 'view_id':ref('equip3_asset_fms_masterdata.maintenance_vehicle_view_tree')}),
                    (0,0, {'sequence':2, 'view_mode':'form', 'view_id':ref('equip3_asset_fms_masterdata.maintenance_vehicle_view_form')})]
                    " />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Vehicle found, Let's create one!
            </p>
        </field>
    </record>

    <menuitem
        id="equip3_construction_masterdata_asset_menu"
        name="Asset"
        parent="abs_construction_management.menu_Equipments"
        sequence="-2"
        action="equip3_asset_fms_masterdata.modul_asset_action"/>

    <record model='ir.ui.menu' id='equip3_construction_masterdata_asset_menu'>
        <field name="groups_id" eval="[(6, 0, [ref('equip3_construction_accessright_setting.group_construction_engineer')])]"/>
    </record>

    <menuitem
        id="equip3_construction_masterdata_vehicle_menu"
        name="Vehicle"
        parent="abs_construction_management.menu_Equipments"
        sequence="-1"
        action="equip3_asset_fms_masterdata.maintenance_vehicle_action"/>

    <record model='ir.ui.menu' id='equip3_construction_masterdata_vehicle_menu'>
        <field name="groups_id" eval="[(6, 0, [ref('equip3_construction_accessright_setting.group_construction_engineer')])]"/>
    </record>

    <record model="ir.ui.menu" id="abs_construction_management.menu_sub_vehicles">
        <field name="action" eval="False"/>
    </record>

    <record model="ir.ui.menu" id="abs_construction_management.menu_sub_equipments">
        <field name="action" eval="False"/>
    </record>
</odoo>