<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- Group of Product Form View -->
        <record id="view_group_of_product_menu_form" model="ir.ui.view">
            <field name="name">group.of.product.form</field>
            <field name="model">group.of.product</field>
            <field name="arch" type="xml">
                <form string="Group of Product">
                    <sheet>
                        <div>
                            <group>
                                <group>
                                    <field name="active" invisible="1"/>
                                    <field name="cost_code" attrs="{'required': [('cons_use_code', '=', True)], 'invisible': [('cons_use_code', '=', False)]}"/>
                                    <field name="complete_name" invisible='1'/>
                                    <field name="cons_use_code" invisible='1'/>
                                    <field name="name" required="1"/>
                                    <field name="company_id" invisible="0"/>
                                    <field name="branch_id" required="1"/>
                                </group>
                                <group>
                                    <field name="create_uid" string='Created By'/>
                                    <field name="create_date" string='Creation Date'/>
                                </group>
                            </group>
                        </div>
                        <notebook>
                            <page string="Products">
                                <field name="product_ids">
                                    <tree >
                                        <field name="display_name"/>
                                        <field name="list_price"/>
                                        <field name="standard_price"/>
                                        <field name="last_purchase_price"/>
                                        <field name="qty_available"/>
                                        <field name="uom_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter" name="chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <!-- GOP search View-->
        <record model="ir.ui.view" id="view_products_group_of_product_filter">
            <field name="name">products.group.of.product.filter</field>
            <field name="model">group.of.product</field>
            <field name="arch" type="xml">
                <search string="Search Group of Product">
                    <field name="complete_name" string="Group of Product"/>
                </search>
            </field>
        </record>

        <!-- Group of Product tree View -->
        <record id="view_group_of_product_menu_tree" model="ir.ui.view">
            <field name="name">group.of.product.tree</field>
            <field name="model">group.of.product</field>
            <field name="arch" type="xml">
                <tree multi_edit="1" sample="1">
                    <field name="cost_code" invisible='1'/>
                    <field name="name" invisible='1'/>
                    <field name="complete_name" string="Group of Product"/>
                    <field name="cons_use_code" invisible='1'/>
                </tree>
            </field>
        </record>

        <!-- Group of Product Action -->
        <record id="action_view_group_of_product_menu_tree" model="ir.actions.act_window">
            <field name="name">Group of Product</field>
            <field name="res_model">group.of.product</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_products_group_of_product_filter"/>
        </record>

        <!-- Group of Product Menu -->
        <menuitem id="menu_sub_group_of_product"
                  name="Group of Product"
                  parent="abs_construction_management.menu_configuration"
                  action="action_view_group_of_product_menu_tree"
                  sequence="4"/>

        <record model='ir.ui.menu' id='menu_sub_group_of_product'>
            <field name="groups_id" eval="[(6, 0, [ref('equip3_construction_accessright_setting.group_construction_engineer')])]"/>
        </record>

        <!-- Change Type of Issue sequence from 1 to 2 -->
        <!-- <menuitem id="abs_construction_management.menu_sub_vehicle_request" sequence="2"/>-->

        <!-- Add sub menu Group of Product in Module Inventory > Configuration > Products -->
        <!-- Action -->
        <record id="products_group_of_product" model="ir.actions.act_window">
            <field name="name">Group of Product</field>
            <field name="res_model">group.of.product</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <menuitem id="inventory_menu_products_group_of_product"
                  action="products_group_of_product"
                  name="Group of Product"
                  parent="stock.menu_product_in_config_stock" sequence="2"/>
    </data>
</odoo>