<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="view_project_location_form" model="ir.ui.view">
            <field name="name">project.location.form</field>
            <field name="model">project.location</field>
            <field name="arch" type="xml">
                <form string="Project Location" create="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" string="Name"/>
                                <field name="active_location_id" invisible="1"/>
                                <field name="project_id"/>
                            </group>
                            <group>
                                <label for="street" string="Construction Location"/>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="street_2" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="city" placeholder="City" class="o_address_city"/>
                                    <field name="state_id" class="o_address_state" placeholder="State" options="{&quot;no_open&quot;: True}"/>
                                    <field name="zip_code" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True}"/>
                                </div>
                            </group>
                            <group colspan="2" col="2">
                                <separator string="Geolocation" colspan="2"/>
                                <button
                                    string="Geolocate"
                                    name="geo_localize"
                                    colspan="2"
                                    icon="fa-check"
                                    type="object"/>
                                <div>
                                    <span class="oe_inline"> ( On  </span>
                                    <field name="date_localization" nolabel="1" class="oe_inline"/>
                                    <span> : Lat : </span>
                                    <field name="latitude" nolabel="1" class="oe_inline"/>
                                    <span> ;  Long:  </span>
                                    <field name="longitude" nolabel="1" class="oe_inline"/>
                                    <span>) </span>
                                </div>
                            </group>
                            <group>
                                <separator string="Attendance Range" colspan="2"/>
                                <div>
                                    <field name="attendance_range" nolabel="1" class="oe_inline"/>Meter
                                </div>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- res.partner is Project Location to refer-->
        <record id="view_partner_project_location_form" model="ir.ui.view">
            <field name="name">partner.project.location.form</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form string="Project Location">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" string="Name"/>
                                <field name="is_project_location" invisible="1"/>
                            </group>
                            <group>
                                <field name="type" invisible="1"/>
                                <field name="parent_id" invisible="1"/>
                                <label for="street" string="Construction Location"/>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="city" placeholder="City" class="o_address_city"/>
                                    <field name="state_id" class="o_address_state" placeholder="State" options="{&quot;no_open&quot;: True}"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True}"/>
                                </div>
                            </group>
                            <group colspan="2" col="2">
                                <separator string="Geolocation" colspan="2"/>
                                <button
                                    string="Geolocate"
                                    name="geo_localize"
                                    colspan="2"
                                    icon="fa-check"
                                    type="object"/>
                                <div>
                                    <span class="oe_inline"> ( On  </span>
                                    <field name="date_localization" nolabel="1" class="oe_inline"/>
                                    <span> : Lat : </span>
                                    <field name="partner_latitude" nolabel="1" class="oe_inline"/>
                                    <span> ;  Long:  </span>
                                    <field name="partner_longitude" nolabel="1" class="oe_inline"/>
                                    <span>) </span>
                                </div>
                            </group>
                            <group>
                                <separator string="Attendance Range" colspan="2"/>
                                <div>
                                    <field name="attendance_range" nolabel="1" class="oe_inline"/>Meter
                                </div>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_partner_project_location_tree" model="ir.ui.view">
            <field name="name">partner.project.location.tree</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_partner_project_location" model="ir.actions.act_window">
            <field name="name">Project Location</field>
            <field name="res_model">res.partner</field>
            <field name="domain">[('is_project_location', '=', True)]</field>
            <field name="context">{'default_is_project_location': 'True'}</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('equip3_construction_masterdata.view_partner_project_location_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('equip3_construction_masterdata.view_partner_project_location_form')})]"/>
        </record>

        <menuitem id="menu_project_location"
                  name="Project Location"
                  parent="abs_construction_management.menu_configuration"
                  action="action_partner_project_location"
                  sequence="4"/>

        <record model='ir.ui.menu' id='menu_project_location'>
            <field name="groups_id" eval="[(6, 0, [ref('equip3_construction_accessright_setting.group_construction_engineer')])]"/>
        </record>
        <!-- Project Location to res.partner -->
    </data>
</odoo>