<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- tree view section -->
        <record id="masterdata_section_view_tree" model="ir.ui.view">
            <field name="name">masterdata.section.view.tree</field>
            <field name="model">section.line</field>
            <field name="arch" type="xml">
                <tree multi_edit="1" sample="1">
                    <field name="code" invisible='1'/>
                    <field name="name" invisible='1'/>
                    <field name="complete_name" string="Section"/>
                    <field name="cons_use_code" invisible='1'/>
                </tree>
            </field>
        </record>


        <!-- form view section -->
        <record id="masterdata_section_view_form" model="ir.ui.view">
            <field name="name">masterdata.section.view.form</field>
            <field name="model">section.line</field>
            <field name="arch" type="xml">
                <form string="Section">
                    <sheet>
                        <group>
                            <group>
                                <field name="active" invisible="1"/>
                                <field name="code" attrs="{'required': [('cons_use_code', '=', True)], 'invisible': [('cons_use_code', '=', False)]}"/>
                                <field name="name" required='1'/>
                                <field name="complete_name" invisible='1'/>
                                <field name="cons_use_code" invisible='1'/>
                            </group>
                            <group>
                                <field name="create_uid"/>
                                <field name="create_date" string='Creation Date'/>
                            </group>   
                        </group>
                    </sheet>
                    <div class="oe_chatter" name="chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- action section -->
        <record id="masterdata_section_action" model="ir.actions.act_window">
            <field name="name">Section</field>
            <field name="res_model">section.line</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Section found. Let's create one!
                </p>
            </field>
        </record>

    </data>
</odoo>
