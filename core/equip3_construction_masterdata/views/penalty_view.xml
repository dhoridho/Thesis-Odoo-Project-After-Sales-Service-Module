                                <h3>
                                    <b>Penalty Details</b>
                                </h3>
                                <hr/>
                            </div>
                        </div>
                        <br/>
                        <div>
                            <field name="diff_penalty"/>
                            <label for="diff_penalty"/>
                        </div>
                        <group>
