                                        </div>
                                    </group>
                                    <group>
                                    </group>
                                </group>
                            </page> -->
                        </notebook>
                    </div>
                </sheet>
                <div class="oe_chatter" name="chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="construction_penalty_view_tree_id" model="ir.ui.view">
        <field name="name">construction.penalty.view.tree</field>
        <field name="model">construction.penalty</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="penalty"/>
                <!-- <field name="days_needed_to_paid"/>
                <field name="amount" widget="monetary"/> -->
            </tree>
        </field>
    </record>

    <!-- action -->
    <record id="construction_penalty_view_action_id" model="ir.actions.act_window">
        <field name="name">Penalty</field>
        <field name="res_model">construction.penalty</field>
        <field name="view_mode">tree,form</field>
    </record>

