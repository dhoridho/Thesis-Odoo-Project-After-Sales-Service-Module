<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- product.category inherit form view -->
        <record id="product_category_view_id" model="ir.ui.view">
            <field name="name">product.category.inherit.view.form</field>
            <field name="model">product.category</field>
            <field name="inherit_id"
                   ref="equip3_accounting_analytical.account_analytic_tags_product_category_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='analytic_tag_ids']" position="after">
                    <field name="purchase_action"/>
                    <field name="coscode"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>