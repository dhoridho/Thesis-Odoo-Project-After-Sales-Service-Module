<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_upload_variable" model="ir.ui.view">
        <field name="name">upload.variable.cons</field>
        <field name="model">upload.variable.cons</field>
        <field name="arch" type="xml">
            <form string="Upload Variable">
                <div class="d-inline-flex" id="download_variable_template">
                    <p>Download Template</p>
                    <div class="" role="alert" style="margin-left: 10px; margin-top: 0px;" attrs="{'invisible': [('type', '=', 'job_subcon')]}">
                        <a
                            href="/equip3_construction_masterdata/static/sample_data/Variable.xlsx"
                            target="_blank">
                            <strong>Variable</strong>
                        </a> 
                    </div>
                    <div class="" role="alert" style="margin-left: 10px; margin-top: 0px;" attrs="{'invisible': [('type', '=', 'variable')]}">
                        <a
                            href="/equip3_construction_masterdata/static/sample_data/Job Subcon.xlsx"
                            target="_blank">
                            <strong>Job Subcon</strong>
                        </a> 
                    </div>
                </div>
                <br/>
                <group>
                    <group>
                        <field name="type" invisible='1'/>
                        <field name="attachment_file" filename="file_name" required='1'/>
                        <field name="file_name" invisible="1"/>
                    </group>
                </group>
                <group invisible='1'>
                    <field name="description_variable" />
                </group>
                <footer>
                    <button name="import_action" string="Import" type="object" default_focus="1" class="oe_highlight"/>
                    <button special="cancel" string="Close" class="oe_highlight" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_upload_variable" model="ir.actions.act_window">
        <field name="name">Import Variable</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">upload.variable.cons</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref='view_upload_variable'/>
        <field name="context">{'default_type': 'variable'}</field>
        <field name="target">new</field>
    </record>


    <record id="action_upload_job_subcon" model="ir.actions.act_window">
        <field name="name">Import Job Subcon</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">upload.variable.cons</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref='view_upload_variable'/>
        <field name="context">{'default_type': 'job_subcon'}</field>
        <field name="target">new</field>
    </record>

</odoo>