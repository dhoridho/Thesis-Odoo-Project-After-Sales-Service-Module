<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_responsible_form_id" model="ir.ui.view">
        <field name="name">wizard.responsible.form</field>
        <field name="model">project.cancel.responsible</field>
        <field name="arch" type="xml">
            <form string="Project Cancel">
                <group>
                    <field name="responsible" widget='radio'/>
                    <field name="reason"/>
                </group>
                <footer>
                    <button string="Confirm" name="responsible_confirm" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <!-- action -->
    <record id="wizard_responsible_form_action" model="ir.actions.act_window">
        <field name="name">Project Cancel</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">project.cancel.responsible</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="wizard_responsible_form_id"/>
        <field name="target">new</field>
    </record>
</odoo>