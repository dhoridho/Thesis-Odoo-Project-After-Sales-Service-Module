<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- # depracated
    # dont use this table, gonna erase in future -->
    <!-- group.of.product.wizard tree view -->
    <record id="group_of_product_wizard_view_tree" model="ir.ui.view">
        <field name="name">group.of.product.wizard.view.tree</field>
        <field name="model">group.of.product.wizard</field>
        <field name="arch" type="xml">
            <tree create="false">
                <header>
                    <button name="add_products" string="Add Products" type="object" class="oe_highlight" invisible = "context.get('is_delete') == True" />
                    <button name="delete_products" string="Delete Products" type="object" class="btn-danger" invisible = "context.get('is_delete') != True"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </header>
                <field name="product_id"/>
                <field name="product_name" invisible="1"/>
                <field name="group_of_product"/>
                <field name="sales_price"/>
                <field name="cost"/>  
                <field name="last_purchase_price"/> 
                <field name="qty_on_hand"/>  
                <field name="uom"/>
            </tree>
        </field>
    </record>

    <record id="group_of_product_wizard_view_search" model="ir.ui.view">
        <field name="name">group.of.product.wizard.view.search</field>
        <field name="model">group.of.product.wizard</field>
        <field name="arch" type="xml">
            <search string="Search Products">
                <field name="product_id"/>
                <field name="product_name"/>
                <field name="sales_price"/>  
                <field name="cost"/>  
                <field name="last_purchase_price"/> 
                <field name="qty_on_hand"/>  
                <field name="uom"/>
            </search>
        </field>
    </record>

</odoo>
