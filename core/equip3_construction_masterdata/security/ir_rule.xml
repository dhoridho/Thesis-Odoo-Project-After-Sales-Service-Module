<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>

        <record id="project_multi_branch_rule" model="ir.rule">
            <field name="name">Project Multi-Branch</field>
            <field name="model_id" ref="model_project_project"/>
            <field name="domain_force">[
                '|', 
                    ('branch_id', '=', False), 
                    ('branch_id', 'in', branch_ids)
            ]</field>
        </record>

        <record id="variable_multi_branch_rule" model="ir.rule">
            <field name="name">Variable Multi-Branch</field>
            <field name="model_id" ref="model_variable_template"/>
            <field name="domain_force">[
                '|', 
                    ('branch_id', '=', False), 
                    ('branch_id', 'in', branch_ids)
            ]</field>
        </record>

        <record id="budget_period_multi_branch_rule" model="ir.rule">
            <field name="name">Budget Period Multi-Branch</field>
            <field name="model_id" ref="model_project_budget_period"/>
            <field name="domain_force">[
                '|', 
                    ('branch_id', '=', False), 
                    ('branch_id', 'in', branch_ids)
            ]</field>
        </record>
        
        <record id="group_of_product_multi_branch_rule" model="ir.rule">
            <field name="name">Group of Product Multi-Branch</field>
            <field name="model_id" ref="model_group_of_product"/>
            <field name="domain_force">[
                '|', 
                    ('branch_id', '=', False), 
                    ('branch_id', 'in', branch_ids)
            ]</field>
        </record>

        <record id="retention_term_multi_branch_rule" model="ir.rule">
            <field name="name">Retention Terms Multi-Branch</field>
            <field name="model_id" ref="model_retention_term"/>
            <field name="domain_force">[
                '|', 
                    ('branch_id', '=', False), 
                    ('branch_id', 'in', branch_ids)
            ]</field>
        </record>


        <record model="ir.rule" id="project_group_of_product_multi_company_rule">
            <field name="name">Group Of Product multi company</field>
            <field name="model_id" ref="model_group_of_product"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]
            </field>
        </record>

        
    </data>
</odoo>