<odoo>
	<record id="custom_maintenance_stage_view_tree" model="ir.ui.view">
            <field name="name">maintenance.stage.inherited.tree</field>
            <field name="model">maintenance.stage</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_stage_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='done']" position="after">
                    <field name="custom_mail_template_id"/>
                </xpath>
            </field>
    </record>
</odoo>
