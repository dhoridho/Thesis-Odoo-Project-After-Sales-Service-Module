<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="accounting_configuration_flow_action_client" model="ir.actions.client">
        <field name="name">Accounting Flow</field>
        <field name="tag">accounting_configuration_flow_tag</field>
    </record>
    <record id="accounting_finance_flow_action_client" model="ir.actions.client">
        <field name="name">Finance Flow</field>
        <field name="tag">accounting_finance_flow_tag</field>
    </record>
    <record id="accounting_receivable_flow_action_client" model="ir.actions.client">
        <field name="name">Receivable Flow</field>
        <field name="tag">accounting_receivable_flow_tag</field>
    </record>
    <record id="receivable_flow_configuration_action" model="ir.actions.act_window">
        <field name="name">receivable.flow.configuration.action</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">receivable.flow.wizard</field>
        <field name="view_mode">form</field>
    </record>
    
    <record id="payable_flow_configuration_action" model="ir.actions.act_window">
        <field name="name">payable.flow.configuration.action</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">payable.flow.wizard</field>
        <field name="view_mode">form</field>
    </record>

    <record id="accounting_flow_configuration_action" model="ir.actions.act_window">
        <field name="name">accounting.flow.configuration.action</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">accounting.flow.wizard</field>
        <field name="view_mode">form</field>
    </record>

    <menuitem
        id="accounting_flow_configuration_menu"
        name="Accounting and Finance Flow"
        parent="account.menu_finance"
        sequence="1"/>
    <menuitem
        id="receivable_flow"
        name="Finance Account Receivable Flow"
        action="accounting_receivable_flow_action_client"
        parent="equip3_accounting_flow.accounting_flow_configuration_menu"
        sequence="1"/>
    <menuitem
        id="payable_flow"
        name="Finance Account Payable Flow"
        action="accounting_finance_flow_action_client"
        parent="equip3_accounting_flow.accounting_flow_configuration_menu"
        sequence="2"/>
    <menuitem
        id="accounting_flow_menu"
        name="Accounting Flow"
        action="accounting_configuration_flow_action_client"
        parent="equip3_accounting_flow.accounting_flow_configuration_menu"
        sequence="3"/> 
</odoo> 
