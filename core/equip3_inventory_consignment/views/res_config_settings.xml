<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_setting_config_inherit_form_view_consignment" model="ir.ui.view">
        <field name="name">res_setting_config_inherit_form_view_consignment</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
         <field name="arch" type="xml">
            <xpath expr="//field[@name='module_procurement_jit']/../../../.." position="before">
                <div class="col-12 col-lg-6 o_setting_box" >
                    <div class="o_setting_right_pane">
                        <label for="commision_consignment"/>
                        <div class="text-muted">
                            Select Commision Consignment
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="commision_consignment" class="o_light_label" widget="radio"/>
                            </div>
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <label for="consignment_commision_account" />
                                <field name="consignment_commision_account" />

                                <label for="accrued_commision_account" attrs="{'invisible': [('commision_consignment', '=', 'cash_commision')]}"/>
                                <field name="accrued_commision_account" attrs="{'invisible': [('commision_consignment', '=', 'cash_commision')]}"/>

                            </div>
                        </div>
                    </div>
                </div>

                <!-- <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="brand_setting"/>
                            <div class="text-muted">
                                Configure your expired product tobe scrapped or move to expired location
                            </div>
                            <div class="mt16">
                                <field name="brand_setting" class="o_light_label" widget="radio" default="optional" />
                            </div>
                        </div>
                    </div> -->
            </xpath>
        </field>
    </record>


</odoo>
