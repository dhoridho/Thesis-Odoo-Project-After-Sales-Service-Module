<odoo>
    <data>

        <record id="consignment_form_sale_order" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <!-- <xpath expr="//tree/field[@name='purchase_order_line_id']" position="after">
                    <field name="consignment_id"
                        context="{'default_is_consignment': True}"
                        domain="domain_consignment_agreement" />
                    <field name="domain_consignment_agreement" invisible="1" />

                    <field name="partner_id_product" string="Owner"
                        attrs="{'column_invisible': [('parent.is_consignment', '!=', True)]}"
                        readonly="1" force_save="1" />
                </xpath> -->

                <xpath expr="//tree/field[@name='purchase_order_line_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//tree/field[@name='purchase_order_line_id']" position="before">
                    <field name="product_template_id" position="move" />
                </xpath>

                <xpath expr="//tree/field[@name='product_uom_qty']" position="before">
                    <field name="last_purchase_price" invisible="1"/>
                    <field name="is_consignment" force_save="1" invisible="1"/>
                </xpath>
            </field>
        </record>


        <record id="odoo_consignment_process_form_sale_order_inherit" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="odoo_consignment_process.consignment_form_sale_order"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='is_consignment']" position="attributes">
                    <attribute name="attrs">{'invisible':[('is_consignment','!=', True)]}</attribute>
                </xpath>
            </field>
        </record>

