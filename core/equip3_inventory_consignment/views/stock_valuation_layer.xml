<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_valuation_layer_inherit_from_consignment_into_operation" model="ir.ui.view">
        <field name="name">stock.valuation.layer.inherit.from.consignment.into.operation</field>
        <field name="model">stock.valuation.layer</field>
        <field name="inherit_id" ref="equip3_inventory_operation.stock_valuation_layer_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='remaining_value']" position="after">
                <field name="is_consignment" readonly="1"/>
                <field name="consignment_id" readonly="1"/>
            </xpath>

            <xpath expr="//page[@name='lines']//field[@name='picking_id']" position="before">
                <field name="is_source_consignment" readonly="1" string="Is Consignment" optional="hide"/>
                <field name="consignment_source_id" readonly="1" string="Consignment"/>
            </xpath>
        </field>
    </record>

</odoo>
