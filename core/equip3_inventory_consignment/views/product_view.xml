<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="inherit_reporting_product_tree_view_consignment" model="ir.ui.view">
            <field name="name">product.product.tree.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="odoo_consignment_process.reporting_product_tree_view_consignment"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='purchase_order_line_id']" position="after">
                    <field name="product_lots_ids" readonly="1" widget="many2many_tags"/>
                    <field name="owner_id" widget="many2many_tags"/>
                </xpath>
                <field name="sale_state" position="attributes">
                    <attribute name="optional">hide</attribute>
                </field>
                <xpath expr="//field[@name='sale_state']" position="after">
                    <field name="sale_state_new"/>
                </xpath>
            </field>
        </record>

        <record id="inherit_product_template_only_form_odoo_consignment_process" model="ir.ui.view">
            <field name="name">inherit_product_template_only_form_odoo_consignment_process</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="odoo_consignment_process.product_normal_form_view_inherit_consignment"/>
            <field name="arch" type="xml">
                <!-- <xpath expr="//div[1]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath> -->
                <xpath expr="//div[2]/div[1]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//div[2]/div[1]" position="after">
                    <div>
                       <field name="is_consignment"/>
                       <label for="is_consignment"/>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="inherit_product_template_only_form_view_consignment" model="ir.ui.view">
            <field name="name">inherit_product_template_only_form_view_consignment</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="equip3_inventory_operation.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='inventory']//field[@name='is_pack']" position="after">
                    <field name="is_consignment" widget="boolean_toggle"/>
                </xpath>
            </field>
        </record>

        <record id="product_normal_form_view_inherit_consignment_inherit" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="odoo_consignment_process.product_normal_form_view_inherit_picking_consignment"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='sale_qty']" position="after">
                    <field name="product_lots_ids" widget="many2many_tags" invisible = "1"/>
                    <field name="owner_id" widget="many2many_tags" invisible = "1"/>
                </xpath>
                <xpath expr="//page[@name='consignment_purchase_line']" position="after">
                    <page string="Consignment Sale Order Line" name="consignment_sale_order_line">
                        <field name="sale_order_line_ids">
                            <tree string="Sale Order Lines" create="false">
                                <field name="order_id"/>
                                <field name="name"/>
                                <!-- <field name="customer_id" string="Customer" /> -->
                                <field name="product_id"/>
                                <field name="price_unit"/>
                                <field name="product_qty" sum="Total Qty"/>
                                <field name="product_uom" groups="uom.group_uom"/>
                                <field name="price_subtotal" widget="monetary" sum="Total Subtotal"/>
                                <field name="currency_id" invisible="1"/>
                                <!-- <field name="date_planned"  widget="date"/> -->
                                <field name="state"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
                <!-- <xpath expr="//field[@name='purchase_order_line_id']" position="attributes">
                    <attribute name="invisible">False</attribute>
                </xpath> -->
            </field>
        </record>

        <record id="product_template_search_view_consignment_product" model="ir.ui.view">
            <field name="name">product_template_search_view_consignment_product</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <filter name="filter_to_sell" position="before">
                   <filter name="filter_is_consignment_product" string="Is Consignment" domain="[('is_consignment', '=', True)]"/>
                </filter>
            </field>
        </record>

        <record id="odoo_consignment_process.action_reporting_product_tree_view_consignment" model="ir.actions.act_window">
            <field name="context">{'default_is_assign_owner': True}</field>
        </record>

        <record id="product_template_consignment_action" model="ir.actions.act_window">
            <field name="name">Products</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('is_consignment', '=', True)]</field>
            <field name="context">{'is_consignment' : True}</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No product found. Let's create one!
              </p><p>
              </p>
            </field>
        </record>

        <record id="product_variants_consignment_action" model="ir.actions.act_window">
            <field name="name">Product Variants</field>
            <field name="res_model">product.product</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('is_consignment', '=', True)]</field>
            <field name="context">{'is_consignment' : True, 'create':False}</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No product found. Let's create one!
              </p><p>
              </p>
            </field>
        </record>

        <menuitem
            id="odoo_consignment_process.menu_sub_consignment_products"
            name="Products"
            parent="odoo_consignment_process.menu_consignment_products"
            action="equip3_inventory_consignment.product_template_consignment_action"
            sequence="14"
        />

        <menuitem 
            id="odoo_consignment_process.menu_sub_consignment_product_varinats" 
            name="Product Variants"  
            parent="odoo_consignment_process.menu_consignment_products" 
            action="equip3_inventory_consignment.product_variants_consignment_action" 
            sequence="15" 
        />


    </data>
</odoo>
