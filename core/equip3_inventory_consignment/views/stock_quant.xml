<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_quant_inherit_from_consignment" model="ir.ui.view">
        <field name="name">stock.quant.inherit.from.consignment</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_form_editable"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet//group//group[2]//div[2]" position="after">
                <field name="is_consignment" readonly="1"/>
                <field name="consignment_id" readonly="1"/>
            </xpath>
        </field>
    </record>

</odoo>
