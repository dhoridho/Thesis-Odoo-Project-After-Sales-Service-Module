<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_consignment_agreement_new_tree" model="ir.ui.view">
        <field name="name">consignment.agreement.new.tree</field>
        <field name="model">consignment.agreement</field>
        <field name="arch" type="xml">
            <tree string="Consignment Agreement">
                <field name="title" />
                <field name="name"/>
                <field name="create_uid"/>
                <field name="company_id"/>
                <field name="branch_id"/>
                <field name="date_end"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_consignment_agreement_new_form" model="ir.ui.view">
        <field name="name">consignment.agreement.new.form</field>
        <field name="model">consignment.agreement</field>
        <field name="arch" type="xml">
            <form string="Consignment Agreement">
            <header>
                <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>
                <button name="action_confirm" string="Confirm" type="object" class="btn-primary"
                attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                <button name="open_wizard" string="Receiving Product" type="object" class="btn-primary"
                attrs="{'invisible': [('state', '!=', 'confirm')]}" />
                <button name="action_transfer_back" string="Transfer Back" type="object" class="btn-primary"
                attrs="{'invisible': [('is_transfer_back', '=', False)]}"/>
                <button name="create_vendor_bill" string="Create Vendor Bill" type="object"
                attrs="{'invisible': [('state','=','draft')]}"/>
            </header>
            <sheet>
                <div class="oe_button_box" name="button_box_consignment">
                    <button name="action_view_picking"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-truck"
                        attrs="{'invisible': [('picking_count', '=', 0)]}">
                        <field name="picking_count" widget="statinfo" />
                    </button>
                    <button name="action_view_picking_out"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-truck"
                        attrs="{'invisible': [('picking_out_count', '=', 0)]}">
                        <field name="picking_out_count" widget="statinfo" />
                    </button>
                    <button name="action_view_sale"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-file"
                        attrs="{'invisible': [('sale_picking_count', '=', 0)]}">
                        <field name="sale_picking_count" widget="statinfo"
                            string="Consignment Orders" />
                    </button>
                    <button name="action_view_vendor_bill"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-dollar"
                        attrs="{'invisible': [('move_count', '=', 0)]}">
                        <field name="move_count" widget="statinfo"/>
                    </button>
                    <button name="action_view_journal_entry"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-dollar"
                        attrs="{'invisible': [('move_entry_count', '=', 0)]}">
                        <field name="move_entry_count" widget="statinfo"/>
                    </button>
                </div>
                <div class="oe_title">
                    <label for="name"/>
                    <h1>
                        <field name="name" readonly="1" required="1" force_save="1"/>
                    </h1>
                </div>
                <div class="oe_title">
                    <label for="title"/>
                    <h1>
                        <field name="title" required="1"/>
                    </h1>
                </div>
                <group col="3">
                    <group name="group1">
                        <field name="vendor_id" required="1"/>
                        <field name="currency_id" />
                        <field name="destination_warehouse_id" required="1" attrs="{'invisible': [('set_single_delivery_destination', '=', False)]}"/>
                        <div class="o_row" name="delivery_dest">
                            <field name="set_single_delivery_destination" nolabel="1" attrs="{'readonly': [('state', '!=', 'draft')]}" style="margin-right: 20px;"/>
                            <span>Single Destination</span>
                        </div>
                    </group>
                    <group name="group2">
                        <field name="account_tag_ids" widget="many2many_tags"/>
                        <field name="date_end" required="1"/>
                        <label for="auto_create_bill" invisible='1'/>
                        <div class="o_row" name="auto_create_bill_div">
                            <field name="auto_create_bill" nolabel="1" style="margin-right: 20px;"/>
                            <span>Auto Create Bill</span>
                        </div>
                        <field name="confirm_date" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                        <label for="bill_cycle" attrs="{'invisible': [('auto_create_bill', '=', False)]}"/>
                        <div class="o_row" name="bill_cycle" attrs="{'invisible': [('auto_create_bill', '=', False)]}">
                            <field name="bill_cycle"
                                attrs="{'readonly': [('state', '!=', 'draft')], 'required':[('auto_create_bill', '=', True)]}" />
                            <span attrs="{'invisible': [('auto_create_bill', '=', False)]}">Days</span>
                        </div>
                        <field name="pricing_method" required="1"/>
                    </group>
                    <group name="group3">
                        <field name="payment_term_id"/>
                        <field name="company_id" required="1" />
                        <field name="branch_id" required="1" />
                        <field name="create_uid"/>
                        <field name="create_date"/>
                        <field name="is_transfer_back" invisible="1"/>
                        <field name="picking_ids" widget="many2many_tags" force_save="1" readonly="1" invisible="1"/>
                    </group>
                </group>
                <notebook>
                    <page string="Products" name="products">
                        <field name="line_ids" context="{'default_account_tag_ids_line': account_tag_ids,'default_method': pricing_method,'default_branch_id':branch_id, 'default_company_id':company_id, 'default_destination_warehouse_id':destination_warehouse_id}">
                            <tree string="Products" editable="bottom">
                                <field name="company_id" invisible="1"/>
                                <field name="branch_id" invisible="1"/>
                                <field name="consignment_id" invisible="1"/>
                                <field name="sequence" widget="handle"/>
                                <field name="sequence2" force_save="1" readonly="1"/>
                                <field name="product_id" domain="[('company_id','=',company_id),('purchase_ok','=',True),('product_tmpl_id.is_consignment','=', True)]" required="1"/>
                                <field name="product_description_variants"/>
                                <field name="receiving_quantities" readonly="1" force_save="1"/>
                                <field name="available_quantity"/>
                                <field name="transfer_back_qty"/>
                                <field name="sold_quantities" readonly="1" force_save="1"/>
                                <field name="billed_quantities" readonly="1" force_save="1"/>
                                <field name="product_uom_id"/>
                                <field name="destination_warehouse_id" attrs="{'required' :[('parent.set_single_delivery_destination', '=', False)],
                                'column_invisible': [('parent.set_single_delivery_destination', '=', True)]}" force_save="1"/>
                                <field name="account_tag_ids_line" required="1" widget="many2many_tags"/>
                                <field name="method" force_save="1"/>
                                <field name="cost_price" force_save="1"/>
                                <field name="margin" readonly="1" force_save="1"/>
                                <field name="margin_amount" readonly="1" force_save="1"/>
                                <field name="sale_price" readonly="1" force_save="1" attrs="{'readonly': [('method', '=', 'sale_price')]}"/>
                            </tree>
                            <form string="Products">
                                <group>
                                    <field name="company_id" invisible="1"/>
                                    <field name="branch_id" invisible="1"/>
                                    <field name="consignment_id" invisible="1"/>
                                    <field name="sequence" widget="handle"/>
                                    <field name="sequence2" force_save="1" readonly="1"/>
                                    <field name="product_id"/>
                                    <field name="product_description_variants"/>
                                    <field name="receiving_quantities"/>
                                    <field name="sold_quantities"/>
                                    <field name="billed_quantities"/>
                                    <field name="product_uom_id"/>
                                    <field name="destination_warehouse_id" />
                                    <field name="account_tag_ids_line"/>
                                    <field name="method"/>
                                    <field name="cost_price"/>
                                    <field name="margin"/>
                                    <field name="margin_amount"/>
                                    <field name="sale_price"/>
                                </group>
                            </form>
                        </field>
                        <separator string="Terms and Conditions"/>
                        <field name="description" />
                    </page>
                </notebook>
            </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_consignment_agreement_new">
        <field name="name">Consignment Agreement</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">consignment.agreement</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Let's Create a Consignment Agreement
          </p>
        </field>
    </record>

    <menuitem
        id="menu_consignment_agreement_new"
        name="Consignment Agreement"
        parent="odoo_consignment_process.menu_consignment_purchase_orders"
        action="action_consignment_agreement_new"
        sequence="1"/>



</odoo>
