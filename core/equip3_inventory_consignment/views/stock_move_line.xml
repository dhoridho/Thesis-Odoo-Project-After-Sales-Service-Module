<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_move_line_inherit_from_consignment" model="ir.ui.view">
        <field name="name">stock.move.line.inherit.from.consignment</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='owner_id']" position="after">
                <field name="is_consignment" readonly="1"/>
            </xpath>
        </field>
    </record>

</odoo>
