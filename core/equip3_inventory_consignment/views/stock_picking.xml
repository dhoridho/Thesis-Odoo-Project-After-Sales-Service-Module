<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="is_consignment_form_stock_picking_consignment" model="ir.ui.view">
            <field name="name">stock.picking.form.is.consignment</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="equip3_inventory_operation.inherit_stock_picking_form_view_operation"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="owner_id" attrs="{'invisible': ['|', ('is_consignment','!=', True), ('picking_type_code', '!=', 'incoming')]}"/>
                </xpath>

                <xpath expr="//group[@name='group_body_picking3']//field[@name='current_user']" position="after">
                    <field name="is_consignment" attrs="{'invisible': [('is_consignment','!=', True)]}" readonly="1"/>
                </xpath>

                <xpath expr="//sheet/group[1]/group[2]/field[@name='owner_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
