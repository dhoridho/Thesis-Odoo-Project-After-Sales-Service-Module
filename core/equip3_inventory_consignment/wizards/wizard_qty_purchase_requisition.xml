<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="wizard_qty_consignment_agreement_view" model="ir.ui.view">
        <field name="name">wizard_qty_consignment_agreement_view</field>
        <field name="model">wizard.qty.consignment.agreement</field>
        <field name="arch" type="xml">
            <form>
                <field name="consignment_id" invisible="1"/>
                <notebook>
                    <page name="name" string="Products">
                        <field name="consignment_agreement_line_wizard_ids">
                            <tree editable="top" delete="false" create="false">
                                <field name="consignment_agreement_line_id" invisible="1"/>
                                <field name="no" readonly="1"/>
                                <field name="product_id" readonly="1" force_save="1"/>
                                <!-- <field name="quantity_ordered" readonly="1" force_save="1"/> -->
                                <field name="destination_id" readonly="1" force_save="1"/>
                                <!-- <field name="remaining" readonly="1" force_save="1"/> -->
                                <field name="receiving_quantities"/>
                                <field name="company_id" invisible="1"/>
                                <field name="product_uom_id" invisible="1"/>
                                <field name="consignment_id" invisible="1"/>
                            </tree>
                        </field>
                    </page>
                </notebook>

                <footer>
                    <button name="confirm" string="Confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
