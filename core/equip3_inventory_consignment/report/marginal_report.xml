<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- VIEW SALE ORDER LINE CONSIGNMENT  -->
        <record id="reporting_marginal_report" model="ir.ui.view">
            <field name="name">Marginal Report</field>
            <field name="model">marginal.report</field>
            <field name="arch" type="xml">
                <tree create="0">
                    <field name="product_name"/>
                    <field name="consignor"/>
                    <field name="consignee"/>
                    <field name="product_code"/>
                    <field name="reference"/>
                    <field name="lot"/>
                    <field name="product_qty"/>
                    <field name="purchase_price"/>
                    <field name="purchase_qty"/>
                    <field name="purchase_total"/>
                    <field name="sale_order_name"/>
                    <field name="so_date" invisible="1"/>
                    <field name="price_unit"/>
                    <field name="sale_qty"/>
                    <field name="sale_price"/>
                    <field name="margin"/>
                    <field name="state"/>
                    <field name="branch_id" invisible="1"/>
               </tree>
            </field>
        </record>

        <!-- Search Marginal Report -->
        <record id="search_reporting_marginal_report" model="ir.ui.view">
            <field name="name">marginal.report.search</field>
                <field name="model">marginal.report</field>
                <field name="arch" type="xml">
                    <search string="Marginal search">
                        <field name="product_name"/>
                        <field name="consignor"/>
                        <field name="consignee"/>
                        <field name="lot"/>
                        <field name="sale_order_name"/>
                    </search>
                </field>
            </record>

        <!-- ACTION MARGINAL REPORT -->
        <record id="action_marginal_report" model="ir.actions.act_window">
            <field name="name">Marginal Report</field>
            <field name="res_model">marginal.report</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="reporting_marginal_report"/>
            <field name="search_view_id" ref="search_reporting_marginal_report"/>
        </record>

        <!-- Menu Marginal Report -->
        <menuitem 
            id="menu_marginal_report" 
            name="Marginal Report"  
            parent="odoo_consignment_process.menu_reporting_products"
            action="action_marginal_report"
            sequence="7" />

        

</odoo>
