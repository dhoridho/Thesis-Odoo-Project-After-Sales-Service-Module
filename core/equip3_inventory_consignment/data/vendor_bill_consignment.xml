<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="0">
        <record id="vendor_bill_consigment_scheduler" model="ir.cron">
            <field name="name">Vendor Bill Consignment Scheduler</field>
            <field name="model_id" ref="model_consignment_agreement"/>
            <field name="state">code</field>
            <field name="code">model.create_vendor_bill()</field>
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="datetime.now() + (datetime.now(pytz.timezone('Asia/Jakarta')).replace(hour=00, minute=59, second=0) - datetime.now(pytz.timezone('Asia/Jakarta'))) % timedelta(hours=24)"/>
            <field name="numbercall">-1</field>
            <field eval="True" name="doall" />
            <field name="active">False</field>
        </record>
    </data>
</odoo>
