<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="close_pettycash_fund_form" model="ir.ui.view">
            <field name="name">Petty Cash Fund Closing Wizard</field>
            <field name="model">account.pettycash.fund.close</field>
            <field name="arch" type="xml">
                <form string="Close Petty Cash Fund">
                    <group>
                        <group>
                            <field name="fund" readonly="1"/>
                            <field name="effective_date"/>
                            <field name="close_balance" invisible="1"/>
                            <field name="receivable_account" string="Close Petty Cash Account" attrs="{'invisible': [('close_balance', '=', 0.00)], 'required': [('close_balance', '!=', 0.00)]}"/>
                        </group>
                        <group invisible="1">
                            <field name="currency_id" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="active_manual_currency_rate" invisible="1"/>
                            <field name="apply_manual_currency_exchange" attrs="{'invisible': [('active_manual_currency_rate', '=', False)]}" />
                            <field name="manual_currency_exchange_inverse_rate" attrs="{'invisible': ['|',('apply_manual_currency_exchange', '=', False),('active_manual_currency_rate', '=', False)],'required':[('apply_manual_currency_exchange', '=', True)]}" />
                            <field name="manual_currency_exchange_rate" attrs="{'invisible': ['|',('apply_manual_currency_exchange', '=', False),('active_manual_currency_rate', '=', False)],'required':[('apply_manual_currency_exchange', '=', True)]}" />
                        </group>
                    </group>
                    <footer>
                        <button name="close_fund" type="object" string="Close" class="oe_highlight"/>
                        <button name="cancel" special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="close_petty_cash_fund" model="ir.actions.act_window">
            <field name="name">Close Petty Cash Fund</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.pettycash.fund.close</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


    </data>
</odoo>
