<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="replenish_pettycash_fund_form" model="ir.ui.view">
            <field name="name">Replenish Petty Cash Fund Form</field>
            <field name="model">replenish.wizard</field>
            <field name="arch" type="xml">
                <form string="Replenish Petty Cash Fund">
                    <group>
                        <group>
                            <field name="fund_id" readonly="1"/>
                            <field name="effective_date" required="1"/>
                            <field name="replenish_account_id" required="1"/>
                            <field name="replenish_amount" required="1"/>
                        </group>
                    </group>
                    <footer>
                        <button name="replenish_fund" type="object" string="Confirm" class="oe_highlight"/>
                        <button name="cancel" special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="replenish_petty_cash_fund" model="ir.actions.act_window">
            <field name="name">Replenish Petty Cash Fund</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">replenish.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


    </data>
</odoo>
