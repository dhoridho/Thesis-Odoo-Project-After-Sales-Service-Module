<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_petty_voucher">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page" style="font-size:15px;">
                        <div class="row mb-4">
                            <img src="/equip3_accounting_pettycash/static/description/hashmicro_logo.png" style="width:8.60cm"
                             alt="Logo"/> 
                        </div>
                        <div class="row mb-4">
                            <h3>
                                <span >Petty Cash Voucher</span>
                            </h3>
                        </div>
                        <div class="row">
                            <table width="100%">

                                <tr>
                                    <td>Petty Cash Number :
                                        <span t-field="o.number"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Fund :
                                        <span t-field="o.fund"/>
                                    </td>
                                    <td>
                                        Bill Date :
                                        <span t-field="o.date" t-options="{'widget': 'date'}"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Bank / Cash Journal :
                                        <span t-field="o.ba_ca_journal_id"/>
                                    </td>
                                    <td>
                                        Currency :
                                        <span t-field="o.currency_id"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Submitter :
                                        <span t-field="o.submitter_id"/>
                                    </td>
                                    <td>
                                        Company :
                                        <span t-field="o.company_id"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <br></br>
                        <div class="row">
                            <h5>Voucher Lines</h5>
                        </div>
                        <div class="row">
                            <table width="100%" class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Description</th>
                                        <th>Quantity</th>
                                        <th>Unit Price</th>
                                        <th>Tax</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.voucher_line" t-as="line">
                                        <tr>
                                            <td>
                                                <span t-field="line.product_id"/>
                                            </td>
                                            <td>
                                                <span t-field="line.name"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.quantity"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.price_unit"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.tax_ids"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.amount"
                                                      t-options="{'widget': 'monetary'}"/>

                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
