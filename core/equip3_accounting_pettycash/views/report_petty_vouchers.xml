<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_petty_vouchers">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page" style="font-size:15px;">
                        <div class="row mb-4">
                            <img src="/equip3_accounting_pettycash/static/description/hashmicro_logo.png" style="width:8.60cm"
                             alt="Logo"/> 
                        </div>
                        <div class="row mb-4">
                            <h3>
                                <span >Petty Cash</span>
                            </h3>
                        </div>
                        <div class="row">
                            <table width="100%">

                                <tr>
                                    <td>Petty Cash Number :
                                        <span t-field="o.number"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Name :
                                        <span t-field="o.name"/>
                                    </td>
                                    <td>
                                        Fund Amount :
                                        <span t-field="o.amount"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Custodian :
                                        <span t-field="o.custodian"/>
                                    </td>
                                    <td>
                                        Balance :
                                        <span t-field="o.balance"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Cash Journal :
                                        <span t-field="o.cash_journal"/>
                                    </td>
                                    <td>
                                        Virtual Balance :
                                        <span t-field="o.virtual_balance"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Petty Cash Journal :
                                        <span t-field="o.journal"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <br></br>
                        <div class="row">
                            <h5>Vouchers</h5>
                        </div>
                        <div class="row">
                            <table width="100%" class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Submitter</th>
                                        <th>Total</th>
                                        <th>Fund</th>
                                        <th>Partner</th>
                                        <th>Payment Reference</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.voucher_id" t-as="line">
                                        <tr>
                                            <td>
                                                <span t-field="line.date" t-options="{'widget': 'date'}"/>
                                            </td>
                                            <td>
                                                <span t-field="line.submitter_id"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.total"/>
                                            </td>
                                            <td>
                                                <span t-field="line.fund"/>
                                            </td>
                                            <td>
                                                <span t-field="line.partner_id"/>
                                            </td>
                                            <td>
                                                <span t-field="line.payment_reference"/>

                                            </td>
                                            <td>
                                                <span t-field="line.state"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
