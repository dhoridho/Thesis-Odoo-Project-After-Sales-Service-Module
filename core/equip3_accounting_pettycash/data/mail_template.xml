<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="mail_template_petty_cash_voucher_approval" model="mail.template">
            <field name="name">Petty Cash Voucher Approval</field>
            <field name="model_id" ref="model_account_pettycash_voucher_wizard"/>
            <field name="subject">Petty Cash Voucher Approval</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px; font-size: 13px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear ${ctx['custodian_name']},
                        <br/>
                        <br/>
                        You have approval pending that needs your decision to approve or reject the petty cash.
                        <br/>
                        <br/>
                        ${ctx['submitter_name']} has requested a ${ctx['total_amount']} petty cash by fund ${ctx['fund_name']} at ${ctx['voucher_date']}. Reference : ${ctx['voucher_name']}
                        <br/>
                        <br/>
                        You can approve or reject the petty cash by clicking this link:
                        <div style="margin: 16px 0px 16px 0px;">
                            <a href="${ctx.get('url')}"
                               style="background-color: #875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;">
                                View Petty Cash Voucher
                            </a>
                        </div>
                    </p>
                </div>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>

        <record id="mail_template_petty_cash_voucher_approved" model="mail.template">
            <field name="name">Petty Cash Voucher Approved</field>
            <field name="model_id" ref="model_account_pettycash_voucher_wizard"/>
            <field name="subject">Petty Cash Voucher Approved</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px; font-size: 13px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear ${ctx['submitter_name']},
                        <br/>
                        <br/>
                        We have received a response to your request for a Petty Cash Voucher on ${ctx['voucher_date']}.
                        <br/>
                        <br/>
                        This notification serves as confirmation that your Petty Cash Voucher has been <b>approved</b>.
                    </p>
                </div>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>

        <record id="mail_template_petty_cash_voucher_rejected" model="mail.template">
            <field name="name">Petty Cash Voucher Rejected</field>
            <field name="model_id" ref="model_account_pettycash_voucher_wizard"/>
            <field name="subject">Petty Cash Voucher Rejected</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px; font-size: 13px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear ${ctx['submitter_name']},
                        <br/>
                        <br/>
                        We have received a response to your request for a Petty Cash Voucher on ${ctx['voucher_date']}.
                        <br/>
                        <br/>
                        This notification serves as confirmation that your Petty Cash Voucher has been <b>rejected</b>.
                    </p>
                </div>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>