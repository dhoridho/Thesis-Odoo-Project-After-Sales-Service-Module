<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-extend="hr_holidays.calendar.popover">
        <!-- Extend the existing template to add the new field -->
        <t t-jquery=".o_cw_body .o_cw_popover_fields_secondary" t-operation="before">
            <ul class="list-group list-group-flush o_cw_popover_fields_secondary" t-if="widget.leave_type">
                <li class="list-group-item">
                    <span t-if="widget.leave_type">Leave Types: <t t-esc="widget.leave_type"/>
                    </span>
                </li>
            </ul>
        </t>
    </t>
</templates>
