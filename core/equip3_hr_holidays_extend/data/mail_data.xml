            <field name="subject">${object.display_name or 'n/a' } Approval Of Leave Request</field>
            <!--field name="partner_to">${object.partner_id.id}</field-->
            <field name="email_to">${ctx['email_to']|safe}</field>
            <field name="model_id" ref="equip3_hr_holidays_extend.model_hr_leave"/>
            <field eval="True" name="auto_delete"/>
            <!--field name="report_template" ref="report_sale_order"/>
            <field name="report_name">${(object.name or '').replace('/','_')}${object.state == 'draft' and '_draft' or ''}</field-->
            <!--field name="lang">${object.partner_id.lang}</field-->
            <field name="body_html"><![CDATA[
<p>Dear ${object.employee_id.name},
<p>
</br>
We have received your request leave for ${object.holiday_status_id.name},</br>
from (${ctx['date_from']|safe} to ${ctx['date_to']|safe}).</br>
</br>
This notification serves as a confirmation that your request for your leave  has been Approved.</br>
Please know that you will be missed in your absence.</br>
</br>
</br>
We will look forward to seeing you again when you return.</br>
Thank You
</p>
    <br/><br/>

]]></field>
