<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="hr_rule_balance_leave" model="hr.salary.rule">
            <field name="name">Encashment Leave</field>
            <field name="sequence" eval="5"/>
            <field name="code">BALANCE_LEAVE</field>
            <field name="category_id" ref="hr_payroll_community.Other"/>
            <field name="appears_on_payslip">True</field>
            <field name="payslip_type" eval="[(4, ref('equip3_hr_payroll_extend_id.employee_payslip'))]"/>
            <field name="category_on_payslip">income</field>
            <field name="tax_category" eval=""/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">balance_leave = payslip.env['hr.payslip'].get_balance_leave(payslip.id, payslip.date_from, payslip.date_to)
result = (balance_leave['count_leave'] * contract.wage) / worked_days.WORK100.number_of_days</field>
        </record>

        <record id="hr_rule_unpaid_leave" model="hr.salary.rule">
            <field name="name">Unpaid Leaves</field>
            <field name="sequence" eval="24"/>
            <field name="code">UNPAID_LEAVE</field>
            <field name="category_id" ref="hr_payroll_community.DED"/>
            <field name="appears_on_payslip">True</field>
            <field name="payslip_type" eval="[(4, ref('equip3_hr_payroll_extend_id.employee_payslip'))]"/>
            <field name="category_on_payslip">deduction</field>
            <field name="tax_category" eval=""/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">unpaid_leave = payslip.env['hr.payslip'].get_unpaid_leave(payslip.id, payslip.date_from, payslip.date_to)
result = (unpaid_leave['count_leave'] * contract.wage) / worked_days.WORK100.number_of_days</field>
        </record>

    </data>
</odoo>