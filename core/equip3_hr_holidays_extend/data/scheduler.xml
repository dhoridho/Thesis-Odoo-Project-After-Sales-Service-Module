<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="ir_cron_unlink_expired_leave_count" model="ir.cron">
            <field name="name">Update Leave Balance and Leave Count</field>
            <field name="model_id" ref="model_hr_leave_count"/>
            <field name="state">code</field>
            <field name="code">model._cron_unlink_expire_leave_count()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now() + relativedelta(day=1)).strftime('%Y-%m-%d 20:00:00')"/>
        </record>
        <record id="ir_cron_extra_leave_balance" model="ir.cron">
            <field name="name">Extra Leave Balance</field>
            <field name="model_id" ref="model_hr_leave_balance"/>
            <field name="state">code</field>
            <field name="code">model._cron_extra_leave_balance()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now() + relativedelta(day=1)).strftime('%Y-%m-%d 20:00:00')"/>
        </record>
        <!-- Scheduler for Auto Follow Up Leave Approver-->
        <record forcecreate="True" id="ir_cron_leave_auto_follow_up_approver" model="ir.cron">
            <field name="name">Auto Follow Up Leave Approver</field>
            <field name="model_id" ref="model_hr_leave"/>
            <field name="state">code</field>
            <field name="code">model.get_auto_follow_up_approver()</field>
            <field eval="False" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
        </record>
        <!-- Scheduler for Auto Follow Up Leave Cancel Approver-->
        <record forcecreate="True" id="ir_cron_leave_cancel_auto_follow_up_approver" model="ir.cron">
            <field name="name">Auto Follow Up Leave Cancel Approver</field>
            <field name="model_id" ref="model_hr_leave_cancelation"/>
            <field name="state">code</field>
            <field name="code">model.get_auto_follow_up_approver()</field>
            <field eval="False" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
        </record>
        <!-- Scheduler for Auto Follow Up Leave Allocation Approver-->
        <record forcecreate="True" id="ir_cron_leave_allocation_auto_follow_up_approver" model="ir.cron">
            <field name="name">Auto Follow Up Leave Allocation Approver</field>
            <field name="model_id" ref="model_hr_leave_allocation"/>
            <field name="state">code</field>
            <field name="code">model.get_auto_follow_up_approver()</field>
            <field eval="False" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
        </record>
        <record id="ir_cron_filled_next_approvers" model="ir.cron">
            <field name="name">Filled Leave Next Approvers</field>
            <field name="model_id" ref="model_hr_leave"/>
            <field name="state">code</field>
            <field name="code">model._cron_next_approvers()</field>
            <field eval="False" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now() + relativedelta(day=1)).strftime('%Y-%m-%d 20:00:00')"/>
        </record>
    </data>
</odoo>
