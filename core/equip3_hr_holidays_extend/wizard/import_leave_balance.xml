<odoo>
    <record id="view_hr_import_leave_balance_form" model="ir.ui.view">
        <field name="name">hr.import.leave.balance.form</field>
        <field name="model">hr.import.leave.balance</field>
        <field name="arch" type="xml">
            <form>
                <div class="d-inline-flex" id="download_leave_balance_template">
                    <p>Download Template </p>
                    <div class="" role="alert" style="margin-left: 10px; margin-top: 0px;">
                        <a
                            href="/equip3_hr_holidays_extend/static/sample_data/Template_Leave_Balance.xlsx"
                            target="_blank">
                            <strong>Leave Balance</strong>
                        </a>
                    </div>
                </div>
                <br/>
                <group>
                    <group>
                        <field name="import_file" filename="import_name"/>
                        <field name="import_name" invisible="1"/>
                    </group>
                </group>
                <footer>
                    <button name="import_action" string="Import" type="object" default_focus="1" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    
    <record model="ir.actions.act_window" id="action_hr_import_leave_balance">
        <field name="name">Import Leave Balance</field>
        <field name="res_model">hr.import.leave.balance</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_hr_import_leave_balance_form"/>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

    <menuitem action="action_hr_import_leave_balance" 
            id="menu_hr_import_leave_balance" 
            parent="hr_holidays.menu_hr_holidays_approvals" 
            groups="hr_holidays.group_hr_holidays_user,hr_holidays.group_hr_holidays_manager" 
            sequence="6"/>
</odoo>