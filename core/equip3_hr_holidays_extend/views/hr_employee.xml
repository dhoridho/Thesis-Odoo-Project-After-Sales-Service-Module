<?xml version="1.0"?>
<odoo>
    <data>
        <record id="equip3_view_employee_form_leave_inherit" model="ir.ui.view">
            <field name="name">equip3.employee.form.leave.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='job_id']" position="after">
                    <field name="leave_struct_id"/>
                </xpath>
            </field>
        </record>

        <record id="equip3_view_employee_form_inherit_hr_holidays" model="ir.ui.view">
            <field name="name">equip3.employee.form.hr.holidays.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr_holidays.view_employee_form_leave_inherit"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='leave_manager_id']" position="attributes">
                    <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}</attribute>
                    </xpath>
            </field>
        </record>

        <record id="equip3_timeoff_button_hr_holidays" model="ir.ui.view">
            <field name="name">equip3.timeoff.button.hr.holidays.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr_holidays.view_employee_form_leave_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='%(hr_holidays.act_hr_employee_holiday_request)d']" position="attributes">
                    <attribute name="icon">o-hm-smart-hrm-0-days</attribute>
                </xpath>
            </field>
        </record>

        <record id="hr_employee_attendance_view_form" model="ir.ui.view">
            <field name="name">hr.employee.holidays.extend.attendance.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr_holidays_attendance.hr_employee_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='%(hr_attendance.hr_attendance_action)d']" position="attributes">
                    <attribute name="icon">o-hm-smart-hrm-0-hours</attribute>
                </xpath>
            </field>
        </record>

        <record id="equip3_timesheet_button" model="ir.ui.view">
            <field name="name">equip3.timesheet.button</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr_timesheet.hr_employee_view_form_inherit_timesheet"/>
            <field name="arch" type="xml">
                 <xpath expr="//button[@name='%(hr_timesheet.timesheet_action_from_employee)d']" position="attributes">
                    <attribute name="icon">o-hm-smart-hrm-timesheets</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>