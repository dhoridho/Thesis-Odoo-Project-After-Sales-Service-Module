<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	 <record id="hr_leave_flow_view_form" model="ir.ui.view">
        <field name="name">hr.leave.flow.view.form</field>
        <field name="model">hr.leave.flow</field>
        <field name="arch" type="xml">
            <form string="Leaves Flow" class="hr_leave_flow_menu d-flex flex-column"> 
                <div class="content-header">
                    <div class="d-flex p-3 w-100">
                        <span>Leaves Flow</span>
                    </div>
                </div>
                <div class="content-body">
                    <div class="container h-100">
                        <div class="row h-100">

                            <div class="col-md-2 d-flex flex-column">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="hr_holidays.open_view_holiday_status" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_holidays_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Leave Type</div>
                                        </button>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="equip3_hr_holidays_extend.hr_leave_approval_action_matrix" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_holidays_extend/static/src/img/approval.svg"/>
                                            </div>
                                            <div class="button-text">Leave Approval Matrix</div>
                                        </button>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="equip3_hr_holidays_extend.open_view_hr_leave_structure" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_holidays_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Leave Structure</div>
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-2 d-flex flex-column">
                                <div class="row" style="margin-right:-48px;">
                                    <div class="col-md-6 d-flex flex-column"> 
                                        <div class="row">
                                            <div class="col-md-12 col-sm-12 col-12"> 
                                                <button name="action_none" 
                                                    type="object"
                                                    class="btn btn-default">
                                                    <div class="button-img">
                                                        <img class="img-fluid" src="/equip3_hr_holidays_extend/static/src/img/configuration.svg"/>
                                                    </div>
                                                    <div class="button-text">Configuration</div>
                                                </button>
                                                <div class="menu-arrow-up-right">
                                                    <span class="arrow is-triangle arrow-bar is-up-right"></span>
                                                </div>
                                                <div class="menu-arrow-down-right">
                                                    <span class="arrow is-triangle arrow-bar is-down-right"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 d-flex flex-column"> 
                                        <div class="row">
                                            <div class="col-md-12 col-sm-12 col-12"> 
                                                <button name="hr_holidays.hr_leave_allocation_action_my" 
                                                    type="action"
                                                    class="btn btn-default">
                                                    <div class="button-img">
                                                        <img class="img-fluid" src="/equip3_hr_holidays_extend/static/src/img/application.svg"/>
                                                    </div>
                                                    <div class="button-text">My Allocation Request</div>
                                                </button>
                                                <div class="menu-arrow-up-right-allocation1">
                                                    <span class="arrow is-triangle arrow-bar-long is-up-right-allocation1"></span>
                                                </div>
                                                <div class="menu-arrow-right-allocation1">
                                                    <span class="arrow is-triangle arrow-bar is-right-allocation1"></span>
                                                </div>
                                                <div class="menu-arrow-down-right-allocation1">
                                                    <span class="arrow is-triangle arrow-bar is-down-right-allocation1"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-12 col-sm-12 col-12"> 
                                                <button name="equip3_hr_holidays_extend.hr_leave_allocate_generator_action_department" 
                                                    type="action"
                                                    class="btn btn-default">
                                                    <div class="button-img">
                                                        <img class="img-fluid" src="/equip3_hr_holidays_extend/static/src/img/application.svg"/>
                                                    </div>
                                                    <div class="button-text">Generate Allocation</div>
                                                </button>
                                                <div class="menu-arrow-up-right-allocation2">
                                                    <span class="arrow is-triangle arrow-bar is-up-right-allocation2"></span>
                                                </div>
                                                <div class="menu-arrow-right-allocation2">
                                                    <span class="arrow is-triangle arrow-bar is-right-allocation2"></span>
                                                </div>
                                                <div class="menu-arrow-down-right-allocation2">
                                                    <span class="arrow is-triangle arrow-bar-long is-down-right-allocation2"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-2 d-flex flex-column">
                                <div class="row" style="margin-left:48px;">
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="equip3_hr_holidays_extend.hr_my_leave_count_action" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_holidays_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">My Leave Count</div>
                                        </button>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="equip3_hr_holidays_extend.hr_leave_balance_action_my" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_holidays_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">My Leave Balance</div>
                                        </button>
                                        <div class="menu-arrow-right">
                                            <span class="arrow is-triangle arrow-bar is-right"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="equip3_hr_holidays_extend.act_hr_employee_leave_movement_request" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_holidays_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Leave Movement</div>
                                        </button>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="equip3_hr_holidays_extend.hr_leave_balance_action_department" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_holidays_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Leave Balance</div>
                                        </button>
                                        <div class="menu-arrow-right">
                                            <span class="arrow is-triangle arrow-bar is-right"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="equip3_hr_holidays_extend.hr_leave_count_action_department" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_holidays_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Leave Count</div>
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-2 d-flex flex-column">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="hr_holidays.hr_leave_action_my" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_holidays_extend/static/src/img/my-leaves.svg"/>
                                            </div>
                                            <div class="button-text">My Leave Request</div>
                                        </button>
                                        <div class="menu-arrow-right">
                                            <span class="arrow is-triangle arrow-bar is-right"></span>
                                        </div>
                                        <div class="menu-arrow-down-right-reporting">
                                            <span class="arrow is-triangle arrow-bar-long is-down-right-reporting"></span>
                                        </div>
                                        <div class="menu-arrow-down">
                                            <span class="arrow is-triangle arrow-bar-short is-down"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="action_none" 
                                            type="object"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_holidays_extend/static/src/img/approval.svg"/>
                                            </div>
                                            <div class="button-text">Approval</div>
                                        </button>
                                        <div class="menu-arrow-up-left-approval">
                                            <span class="arrow is-triangle arrow-bar is-up-left-approval"></span>
                                        </div>
                                        <div class="menu-arrow-left-approval">
                                            <span class="arrow is-triangle arrow-bar is-left-approval"></span>
                                        </div>
                                        <div class="menu-arrow-down-left-approval">
                                            <span class="arrow is-triangle arrow-bar is-down-left-approval"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="hr_holidays.hr_leave_action_action_approve_department" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_holidays_extend/static/src/img/leaves.svg"/>
                                            </div>
                                            <div class="button-text">Leaves</div>
                                        </button>
                                        <div class="menu-arrow-up">
                                            <span class="arrow is-triangle arrow-bar-short is-up"></span>
                                        </div>
                                        <div class="menu-arrow-up-right-reporting">
                                            <span class="arrow is-triangle arrow-bar-long is-up-right-reporting"></span>
                                        </div>
                                        <div class="menu-arrow-right">
                                            <span class="arrow is-triangle arrow-bar is-right"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-2 d-flex flex-column">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="equip3_hr_holidays_extend.hr_leave_cancel_action_my" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_holidays_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">My Leave Cancelation</div>
                                        </button>
                                        <div class="menu-arrow-down-left-cancelation">
                                            <span class="arrow is-triangle arrow-bar-long is-down-left-cancelation"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="action_none" 
                                            type="object"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_holidays_extend/static/src/img/reporting.svg"/>
                                            </div>
                                            <div class="button-text">Reporting</div>
                                        </button>
                                        <div class="menu-arrow-up-right-reporting">
                                            <span class="arrow is-triangle arrow-bar-long is-up-right-reporting"></span>
                                        </div>
                                        <div class="menu-arrow-right">
                                            <span class="arrow is-triangle arrow-bar is-right"></span>
                                        </div>
                                        <div class="menu-arrow-down-right-reporting">
                                            <span class="arrow is-triangle arrow-bar-long is-down-right-reporting"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="equip3_hr_holidays_extend.hr_leave_cancel_action_department" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_holidays_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Leave Cancelation</div>
                                        </button>
                                        <div class="menu-arrow-up-left-cancelation">
                                            <span class="arrow is-triangle arrow-bar-long is-up-left-cancelation"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-2 d-flex flex-column">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="hr_holidays.action_hr_available_holidays_report" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_holidays_extend/static/src/img/reporting.svg"/>
                                            </div>
                                            <div class="button-text">Leave by Employee</div>
                                        </button>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="equip3_hr_holidays_extend.hr_leave_balance_report_action" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_holidays_extend/static/src/img/reporting.svg"/>
                                            </div>
                                            <div class="button-text">Leave Balance Report</div>
                                        </button>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="hr_holidays.act_hr_employee_holiday_request" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_holidays_extend/static/src/img/reporting.svg"/>
                                            </div>
                                            <div class="button-text">Leave by Type</div>
                                        </button>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </form>
        </field>
    </record>

    <record id="hr_leave_flow_act_window" model="ir.actions.act_window">
        <field name="name">Leaves Flow</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.leave.flow</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <record id="hr_leave_flow_action_client" model="ir.actions.client">
        <field name="name">Leaves Flow</field>
        <field name="tag">hr_leave_flow_tag</field>
    </record>

    <menuitem 
        id="hr_leave_flow_menu"
        name="Leaves Flow"
        action="hr_leave_flow_action_client"
        parent="hr_holidays.menu_hr_holidays_root"
        sequence="0"/>
</odoo>