<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_hr_leave_structure_tree" model="ir.ui.view">
            <field name="name">view.hr.leave.structure.tree</field>
            <field name="model">hr.leave.structure</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>
        <record id="view_hr_leave_structure_form" model="ir.ui.view">
            <field name="name">view.hr.leave.structure.form</field>
            <field name="model">hr.leave.structure</field>
            <field name="arch" type="xml">
                <form string="Leave Structure">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="company_id" readonly="1" groups="base.group_multi_company"/>
                                <!-- <field name="branch_id"/> -->
                                <field name="create_date" string="Created On"/>
                                <field name="create_uid" string="Created By"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Leave Type">
                                <field name="leaves_ids">
                                    <tree>
                                        <field name="display_name" string="Leave Types"/>
                                        <field name="code"/>
                                        <field name="allocation_type"/>
                                        <field name="leave_validation_type"/>
                                        <field name="allocation_validation_type"/>
                                        <field name="company_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="open_view_hr_leave_structure" model="ir.actions.act_window">
            <field name="name">Leave Structure</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.leave.structure</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem
                id="hr_leave_structure_menu_configuration"
                action="open_view_hr_leave_structure"
                name="Leave Structures"
                parent="hr_holidays.menu_hr_holidays_configuration"
                sequence="2"/>

        <record model='ir.ui.menu' id='hr_leave_structure_menu_configuration'>
                <field name="groups_id" eval="[(6, 0, [ref('hr_holidays.group_hr_holidays_user')])]"/>
        </record>

    </data>
</odoo>