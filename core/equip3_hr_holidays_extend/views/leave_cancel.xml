<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_hr_leave_cancelation_filter" model="ir.ui.view">
            <field name="name">hr.leave.filter_cancelation</field>
            <field name="model">hr.leave.cancelation</field>
            <field name="arch" type="xml">
                <search string="Search cancelation">
                    <field name="employee_id"/>
                    <filter string="Pending My Approval" name="pending_my_approval" domain="[('approvers_ids', 'in', uid),('state','=','confirm')]"/>
                </search>
            </field>
        </record>

        <record id="view_my_leave_cancel_tree" model="ir.ui.view">
            <field name="name">view.leave.cancelation.tree</field>
            <field name="model">hr.leave.cancelation</field>
            <field name="arch" type="xml">
                <tree string="My Leave Cancelation">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="holiday_status_id"/>
                    <field name="request_date_from"/>
                    <field name="request_date_to"/>
                    <field name="number_of_days"/>
                    <field name="reason"/>
                    <field name="state" decoration-success="state == 'validate'" 
                            decoration-primary="state == 'draft'"
                            decoration-warning="state == 'confirm'"
                            decoration-danger="state == 'refuse'"
                            widget='badge'/>
                </tree>
            </field>
        </record>
        <record id="view_my_leave_cancel_form" model="ir.ui.view">
            <field name="name">view.leave.cancelation.form</field>
            <field name="model">hr.leave.cancelation</field>
            <field name="arch" type="xml">
                <form string="My Leave Cancelation">
                    <header>
                        <button string="Confirm" name="action_confirm" states="draft" type="object"
                                class="oe_highlight"/>
                        <button string="Approve" name="action_approve" type="object" class="oe_highlight"
                                attrs="{'invisible': ['|', ('is_approver', '=', False), ('state', '!=', 'confirm')]}"/>
                        <button string="Refuse" name="wizard_reject" type="object"
                                attrs="{'invisible': ['|', ('is_approver', '=', False), ('state', '!=', 'confirm')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="confirm,validate,refuse"/>
                    </header>
                    <sheet>
                        <div class="oe_title" name="title">
                            <h2>
                                <field name="name" nolabel="1" readonly="1"/>
                            </h2>
                        </div>
                        <group>
                            <group>
                                <field name="employee_id" domain="[('id','in',domain_employee_ids)]" attrs="{'readonly':['|',('is_readonly','=',True),('state','!=','draft')]}"/>
                                <field name="leave_id" options="{'no_open': True, 'no_create_edit': True, 'no_create': True}"/>
                                <field name="domain_employee_ids" invisible="1"/>
                                <field name="is_readonly" invisible="1"/>
                                <field name="department_id" invisible="1"/>
                                <field name="holiday_status_id" invisible="1"/>
                                <field name="feedback_parent" invisible="1"/>
                                <field name="holiday_type" invisible="1"/>
                                <label for="request_date_from" string="Duration"/>
                                <div class="o_row">
                                    <span>
                                        <field name="request_date_from" readonly="1" force_save="1"/>
                                    </span>
                                    <span>
                                        -
                                    </span>
                                    <span>
                                        <field name="request_date_to" readonly="1" force_save="1"/>
                                    </span>
                                </div>
                                <field name="number_of_days" readonly="1" force_save="1"/>
                            </group>
                            <group>
                                <field name="approvers_ids" widget="many2many_tags" invisible="1"/>
                                <field name="approved_user" invisible="1"/>
                                <field name="is_approver" invisible="1"/>
                                <field name="approved_user_ids" widget="many2many_tags" invisible="1"/>
                                <field name="line_item_visible" invisible="1"/>
                            </group>
                        </group>
                        <group string="Reason for Cancelation">
                            <group>
                                <field name="reason" nolabel="1" placeholder="eg) Report to the next month"
                                       required="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Approver Matrix Line"
                                  attrs="{'invisible': [('line_item_visible', '!=', False)]}">
                                <field name="approver_user_ids">
                                    <tree editable="bottom" create="false" delete="false">
                                        <field name="name"/>
                                        <field name="employee_id" widget="many2many_tags" readonly="1" force_save="1"/>
                                        <field name="matrix_user_ids" widget="many2many_tags" invisible="1" readonly="1" force_save="1"/>
                                        <field name="is_delegation_mail_sent" invisible="1"/>
                                        <field name="minimum_approver" readonly="1" force_save="1"/>
                                        <field name="approved_employee_ids" readonly="1" force_save="1"
                                               widget="many2many_tags" invisible="1"/>
                                        <field name="approved_time" readonly="1" force_save="1"/>
                                        <field name="approver_state" readonly="1" force_save="1" invisible="1"/>
                                        <field name="approval_status" readonly="1" force_save="1"/>
                                        <field name="feedback" readonly="1" force_save="1"/>
                                        <field name="is_approve" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="hr_leave_cancel_action_my" model="ir.actions.act_window">
            <field name="name">My Leave Cancelation</field>
            <field name="res_model">hr.leave.cancelation</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_my_leave_cancel_tree"/>
            <field name="domain">[('employee_id.user_id', '=', uid)]</field>
        </record>


        <record id="hr_leave_cancel_action_department" model="ir.actions.server">
            <field name="name">Leave Cancelation</field>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="model_id" ref="equip3_hr_holidays_extend.model_hr_leave_cancelation"/>
            <field name="code">action = model.custom_menu()</field>
            </record>

        <record id="hr_leave_cancel_action_department_url" model="ir.actions.act_window">
            <field name="name">Leave Cancelation</field>
            <field name="res_model">hr.leave.cancelation</field>
            <field name="context">{'default_holiday_type': 'company'}</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_my_leave_cancel_tree"/>
        </record>
    </data>
</odoo>