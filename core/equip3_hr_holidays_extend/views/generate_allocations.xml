<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_allocate_generator_tree" model="ir.ui.view">
            <field name="name">view.allocate.generator.tree</field>
            <field name="model">hr.leave.allocate.generator</field>
            <field name="arch" type="xml">
                <tree string="Generate Allocations" sample="1">
                    <field name="name"/>
                    <field name="hr_years_id"/>
                    <field name="allocation_type"/>
                    <field name="state" decoration-success="state == 'confirm'" decoration-primary="state == 'draft'" decoration-success2="state == 'generated'"  widget="badge"/>
                </tree>
            </field>
        </record>
        <record id="view_allocate_generator_form" model="ir.ui.view">
            <field name="name">view.allocate.generator.form</field>
            <field name="model">hr.leave.allocate.generator</field>
            <field name="arch" type="xml">
                <form string="Generate Allocations">
                    <header>
                        <button string="Confirm" name="action_confirm" states="draft" type="object"
                                class="oe_highlight"/>
                        <button string="Generate" name="action_approve" type="object" class="oe_highlight"
                                states="confirm"/>
                        <field name="state" widget="statusbar" statusbar_visible="confirm,validate,refuse"/>
                    </header>
                    <sheet>
                        <div class="oe_title" name="title">
                            <h2>
                                <field name="name" nolabel="1" required="1" placeholder="eg. Public Holiday Allocation"/>
                            </h2>
                        </div>
                        <group name="employee_info">
                            <field name="hr_years_id" required="1"/>
                            <field name="allocation_type"/>
                            <field name="company_id" attrs="{'invisible': [('allocation_type', 'not in', 'company')]}"
                                   readonly="1"/>
                            <field name="employee_ids" widget="many2many"
                                   attrs="{'invisible': [('allocation_type', 'not in', 'employee')]}" options="{'no_create': True}">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="department_id"/>
                                    <field name="job_id"/>
                                    <field name="leave_struct_id"/>
                                </tree>
                            </field>
                            <field name="department_ids" widget="many2many"
                                   attrs="{'invisible': [('allocation_type', 'not in', 'department')]}" options="{'no_create': True}">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="company_id" invisible="1"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_leave_allocate_generator_action_department" model="ir.actions.act_window">
            <field name="name">Generate Allocations</field>
            <field name="res_model">hr.leave.allocate.generator</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_allocate_generator_tree"/>
        </record>
    </data>
</odoo>