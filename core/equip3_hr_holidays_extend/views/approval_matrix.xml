<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_leave_approval_tree" model="ir.ui.view">
        <field name="name">view.hr.leave.approval.tree</field>
        <field name="model">hr.leave.approval</field>
        <field name="arch" type="xml">
            <tree string="Leave Approval Matrix">
                <field name="name"/>
                <field name="level"/>
                <field name="create_uid"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>
    <record id="view_hr_leave_approval_form" model="ir.ui.view">
        <field name="name">view.hr.leave.approval.form</field>
        <field name="model">hr.leave.approval</field>
        <field name="arch" type="xml">
            <form string="Leave Approval Matrix">
                <sheet>
                    <div class="oe_title" name="title">
                        <h2>
                            <field name="name" nolabel="1" readonly="1"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="mode_type" string="Apply To" required="1"/>
                            <field name="leave_type_ids" widget="many2many_tags"
                                   attrs="{'invisible': [('mode_type', '!=', 'leave_type')],'required': [('mode_type', '=', 'leave_type')]}" options="{'no_open': True, 'no_create': True, 'no_quick_create': True, 'no_create_edit': True}"/>
                            <field name="employee_ids" widget="many2many_tags"
                                   attrs="{'invisible': [('mode_type', '!=', 'employee')],'required': [('mode_type', '=', 'employee')]}" options="{'no_open': True, 'no_create': True, 'no_quick_create': True, 'no_create_edit': True}"/>
                            <field name="department_ids" widget="many2many_tags"
                                   attrs="{'invisible': [('mode_type', '!=', 'department')],'required': [('mode_type', '=', 'department')]}" options="{'no_open': True, 'no_create': True, 'no_quick_create': True, 'no_create_edit': True}"/>
                            <field name="job_ids" widget="many2many_tags"
                                   attrs="{'invisible': [('mode_type', '!=', 'job_position')],'required': [('mode_type', '=', 'job_position')]}" options="{'no_open': True, 'no_create': True, 'no_quick_create': True, 'no_create_edit': True}"/>
                        </group>
                        <group>
                            <field name="applicable_to"/>
                            <field name="company_id" readonly="1" force_save="1"/>
                            <field name="create_uid"/>
                            <field name="create_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Approver Lines">
                            <field name="leave_approvel_matrix_ids" context="{'leave_approvel_matrix_ids':leave_approvel_matrix_ids}">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="approver_types" required="1"/>
                                    <field name="approver_ids" force_save="1" widget="many2many_tags" attrs="{'readonly':[('approver_types','=','by_hierarchy')],'required':[('approver_types','=','specific_approver')]}"/>
                                    <field name="minimum_approver"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_leave_approval_action_matrix" model="ir.actions.act_window">
        <field name="name">Leave Approval Matrix</field>
        <field name="res_model">hr.leave.approval</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="hr_leave_approval_menu_matrix"
              action="hr_leave_approval_action_matrix"
              parent="hr_holidays.menu_hr_holidays_configuration"
              sequence="10"/>
        <record model='ir.ui.menu' id='hr_leave_approval_menu_matrix'>
                <field name="groups_id" eval="[(6, 0, [ref('hr_holidays.group_hr_holidays_user')])]"/>
        </record>
</odoo>