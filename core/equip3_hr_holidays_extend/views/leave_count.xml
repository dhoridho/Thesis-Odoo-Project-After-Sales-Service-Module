<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_hr_leave_count_filter" model="ir.ui.view">
            <field name="name">view.hr.leave.count.filter</field>
            <field name="model">hr.leave.count</field>
            <field name="arch" type="xml">
                <search string="Leave Count">
                    <field name="employee_id" string="Employee"/>
                    <field name="department_id" string="Department"/>
                    <field name="job_id" string="Job Position"/>
                    <field name="holiday_status_id" string="Leave Types"/>
                    <group expand="0" string="Group By">
                        <filter name="group_employee_id" string="Employee" context="{'group_by':'employee_id'}"/>
                        <filter name="group_name" string="Leave Type" context="{'group_by':'holiday_status_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="view_hr_leave_count_tree" model="ir.ui.view">
            <field name="name">view.hr.leave.count.tree</field>
            <field name="model">hr.leave.count</field>
            <field name="arch" type="xml">
                <tree string="Leave Count" create="1" edit="0">
                    <field name="employee_id"/>
                    <field name="holiday_status_id"/>
                    <field name="start_date"/>
                    <field name="expired_date"/>
                    <field name="hr_months" invisible="1"/>
                    <field name="hr_years_monthly" invisible="1"/>
                    <field name="hr_years" invisible="1"/>
                    <field name="count"/>
                    <field name="description"/>
                    <field name="company_id" invisible="1"/>
                    <field name="is_expired" invisible="1"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>
        <record id="view_hr_leave_count_form" model="ir.ui.view">
            <field name="name">view.hr.leave.count.form</field>
            <field name="model">hr.leave.count</field>
            <field name="arch" type="xml">
                <form string="Leave Count" create="false" edit="0">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="employee_id"/>
                                <field name="department_id"/>
                                <field name="job_id"/>
                                <field name="holiday_status_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                <field name="expired_date"/>
                                <field name="hr_years_monthly"/>
                                <field name="count"/>
                                <field name="description"/>
                                <field name="check_date"/>
                            </group>
                            <group>
                                <field name="active"/>
                                <field name="company_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                <field name="start_date"/>
                                <field name="hr_months"/>
                                <field name="hr_years"/>
                                <field name="is_expired"/>
                                <field name="holiday_type"/>
                                <field name="leave_balance_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_my_leave_count_action" model="ir.actions.act_window">
            <field name="name">My Leave Count</field>
            <field name="res_model">hr.leave.count</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_hr_leave_count_filter"/>
            <field name="domain">[('employee_id.user_id', '=', uid)]</field>
            <field name="context" >{'search_default_group_name':1,'is_my_count':True}</field>
        </record>
        <record id="hr_leave_count_action_department" model="ir.actions.act_window">
            <field name="name">Leave Count</field>
            <field name="res_model">hr.leave.count</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_hr_leave_count_filter"/>
            <field name="context">{'search_default_group_employee_id':1,'search_default_group_name':1}</field>
        </record>
    </data>
</odoo>