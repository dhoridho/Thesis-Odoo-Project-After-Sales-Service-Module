<?xml version="1.0"?>
<odoo>
    <record id="res_config_settings_holidays_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hr.holidays</field>
        <field name="model">res.config.settings</field>
        <!-- <field name="priority" eval="55"/> -->
        <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Leaves" string="Leaves"
                         data-key="equip3_hr_holidays_extend">
                <p>
                    <h3 style="text-indent: 15px;">Leaves</h3>

                </p>
                    <h2>Notification</h2>
                    <div class="row mt16 o_settings_container" name="leaves_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box"
                             id="equip3_hr_holidays_extend.leaves_notification_wa_setting">
                            <div class="o_setting_left_pane">
                                <field name="send_by_wa"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Send By Whatsapp" for="send_by_wa"/>
                            </div>
                            <!-- <div class="mt16" attrs="{'invisible':[('send_by_wa','=',False)]}">
                                <label string="Connector" for="connector_id"/>
                                <field name="connector_id" class="oe_inline"
                                       attrs="{'required':[('send_by_wa','=',True)]}"/>
                            </div> -->
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container"
                         name="equip3_hr_holidays_extend.whatsapp_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box"
                             id="equip3_hr_holidays_extend.notification_email_setting">
                            <div class="o_setting_left_pane">
                                <field name="send_by_email"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Send By Email" for="send_by_email"/>
                            </div>
                        </div>
                    </div>
                    <!--                Auto Email Follow Cron-->
                    <div class="row mt16 o_settings_container" name="auto_follow_up_leave">
                        <div class="col-12 col-lg-6 o_setting_box" id="auto_follow_up_leave_setting">
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="auto_follow_up_leave"/>
                                    <label for="auto_follow_up_leave" string="Auto Follow Up" class="oe_inline"
                                           style="margin-left:10px;"/>
                                </div>
                                <div class="mt16" attrs="{'invisible':[('auto_follow_up_leave','!=',True)]}">
                                    <label for="interval_number_leave" string="Execute Every"/>
                                    <div attrs="{'invisible':[('auto_follow_up_leave','!=',True)]}">
                                        <field name="interval_number_leave" class="oe_inline"
                                               attrs="{'required':[('auto_follow_up_leave','=',True)]}"/>
                                        <field name="interval_type_leave" class="oe_inline"
                                               attrs="{'required':[('auto_follow_up_leave','=',True)]}"/>
                                    </div>
                                </div>
                                <div class="mt16" attrs="{'invisible':[('auto_follow_up_leave','!=',True)]}">
                                    <label for="number_of_repetitions_leave" string="Number of Repetitions"/>
                                    <field name="number_of_repetitions_leave" class="oe_inline"
                                           attrs="{'required':[('auto_follow_up_leave','=',True)]}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="hr_holidays_config_settings_action" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'equip3_hr_holidays_extend', 'bin_size': False}</field>
    </record>

    <menuitem id="hr_holidays_config_settings_menu_action" name="Settings"
              parent="hr_holidays.menu_hr_holidays_configuration"
              action="hr_holidays_config_settings_action" sequence="0" groups="base.group_system"/>

</odoo>