<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mining_approval_matrix_entry_tree" model="ir.ui.view">
        <field name="name">view.mining.approval.matrix.entry.tree</field>
        <field name="model">mining.approval.matrix.entry</field>
        <field name="arch" type="xml">
            <tree string="Approval Matrix Line" default_order="sequence,id">
                <field name="line_id" invisible="1"/>
                <field name="line_ids" invisible="1"/>

                <field name="sequence"/>
                <field name="approver_ids" widget="many2many_tags"/>
                <field name="minimum_approver"/>
                <field name="description"/>
                
                <field name="requested_id" optional="hide"/>
                <field name="requested_time" optional="hide"/>
                <field name="approved_ids" widget="many2many_tags" optional="hide"/>
                <field name="rejected_ids" widget="many2many_tags" optional="hide"/>
                <field name="need_action_ids" widget="many2many_tags" optional="hide"/>
                <field name="state" widget="badge" decoration-success="state == 'approved'" decoration-danger="state == 'rejected'" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="view_mining_approval_matrix_entry_form" model="ir.ui.view">
        <field name="name">view.mining.approval.matrix.entry.form</field>
        <field name="model">mining.approval.matrix.entry</field>
        <field name="arch" type="xml">
            <form string="Approval Matrix Line">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,to_approve,approved"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="line_id" string="Matrix Line"/>
                            <field name="requested_id"/>
                            <field name="requested_time"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="minimum_approver" string="Min. Approver"/>
                            <field name="approver_ids" widget="many2many_tags"/>
                            <field name="approved_ids" widget="many2many_tags"/>
                            <field name="rejected_ids" widget="many2many_tags"/>
                            <field name="need_action_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <group string="Approval Status">
                        <field name="description" nolabel="1"/>
                    </group>
                    <notebook>
                        <page string="Approval Activity" name="line_ids">
                            <field name="line_ids">
                                <tree string="Approval Activity">
                                    <field name="entry_id" invisible="1"/>
                                    <field name="approver_id"/>
                                    <field name="action_time"/>
                                    <field name="note"/>
                                    <field name="state" widget="badge" decoration-success="state == 'approved'" decoration-danger="state == 'rejected'"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
