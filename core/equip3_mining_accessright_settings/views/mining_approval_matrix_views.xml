<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mining_approval_matrix_form" model="ir.ui.view">
        <field name="name">view.mining.approval.matrix.form</field>
        <field name="model">mining.approval.matrix</field>
        <field name="arch" type="xml">
            <form string="Approval Matrix">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                            <field name="branch_id" options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Approver Lines" name="line_ids">
                            <field name="line_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                     <field name="message_follower_ids" widget="mail_followers"/>
                     <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_mining_approval_matrix_tree" model="ir.ui.view">
        <field name="name">view.mining.approval.matrix.tree</field>
        <field name="model">mining.approval.matrix</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="branch_id"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="view_mining_approval_matrix_line_form" model="ir.ui.view">
        <field name="name">view.mining.approval.matrix.line.form</field>
        <field name="model">mining.approval.matrix.line</field>
        <field name="arch" type="xml">
            <form string="Approval Matrix Line">
                <sheet>
                    <group>
                        <group>
                            <field name="matrix_id" invisible="1"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="added_approver_ids" widget="many2many_tags" invisible="1"/> 
                            <field name="minimum_approver"/>
                            <field name="approver_ids"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_mining_approval_matrix_line_tree" model="ir.ui.view">
        <field name="name">view.mining.approval.matrix.line.tree</field>
        <field name="model">mining.approval.matrix.line</field>
        <field name="arch" type="xml">
            <tree string="Approval Matrix Line" editable="bottom">
                <field name="matrix_id" invisible="1"/>
                <field name="sequence_handle" widget="handle"/>
                <field name="sequence"/>
                <field name="added_approver_ids" widget="many2many_tags" invisible="1"/> 
                <field name="approver_ids" widget="many2many_tags" required="1" options="{'no_create': True, 'no_create_edit': True}"/>
                <field name="minimum_approver"/>
            </tree>
        </field>
    </record>

    <record id="action_view_mining_approval_matrix" model="ir.actions.act_window">
        <field name="name">Mining Approval Matrix</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mining.approval.matrix</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Mining Approval Matrix
            </p>
        </field>
    </record>

</odoo>