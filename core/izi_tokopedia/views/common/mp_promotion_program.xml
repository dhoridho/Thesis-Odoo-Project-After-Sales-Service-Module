<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="izi_tokopedia.form_mp_promotion_program" model="ir.ui.view">
            <field name="name">MP Promotion Program Form View</field>
            <field name="model">mp.promotion.program</field>
            <field name="inherit_id" ref="izi_marketplace.mp_promotion_program_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='mp_promotion_fields']" position="inside">
                    <group string="Tokoepdia Bundling Information" attrs="{'invisible': ['|',('marketplace', '!=', 'tokopedia'),('code', '!=', 'bundle')]}">
                        <field name="tp_bundle_type" attrs="{'required': [('code', '=', 'bundle'), ('marketplace', '=', 'tokopedia')]}"/>
                        <field name="tp_bundle_quota"/>
                        <field name="tp_bundle_purchase_limit"/>
                        <field name="tp_bundle_item_list" attrs="{'required': [('code', '=', 'bundle'), ('marketplace', '=', 'tokopedia')]}">
                            <tree editable="top">
                                <field name="promotion_id" invisible="1"/>
                                <field name="mp_account_id" invisible="1"/>
                                <field name="mp_product_id" required="1" domain="[('mp_account_id', '=', mp_account_id),('is_active', '=', True)]" force_save="1"/>
                                <field name="item_original_price"/>
                                <field name="item_bundle_price"/>
                            </tree>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
