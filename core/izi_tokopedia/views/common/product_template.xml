<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="izi_tokopedia.form_product_template_tokopedia" model="ir.ui.view">
            <field name="name">Product Template Form View</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="izi_marketplace.form_product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='marketplace']//page[@name='tokopedia']" position="inside">
                    <group>
                        <group name="tokopedia_data" string="Tokopedia Data">
                            <field name="tp_account_ids" widget="many2many_tags" domain="[('marketplace', '=', 'tokopedia')]" options="{'no_open': True, 'no_create_edit': True, 'no_create': True}"/>
                            <field name="tp_categ_id" options="{'no_open': True, 'no_create_edit': True, 'no_create': True}"/>
                            <field name="tp_condition"/>
                            <field name="tp_stock_status"/>
                            <field name="tp_sales_price"/>
                            <field name="min_order"/>
                            <field name="is_free_return"/>
                            <field name="is_must_insurance"/>
                        </group>
                        <group string="Tokopedia Attribute">
                            <field name="tp_attributes_ids" widget="one2many" nolabel="1">
                                <tree string="Attributes" editable="bottom" create="0" delete="0">
                                    <field name="attribute_id" readonly="1"  force_save="1"/>
                                    <field name="attribute_value_id" domain="[('attribute_id', '=', attribute_id)]" options="{'no_open': True, 'no_create_edit': True, 'no_create': True}"/>
                                    <field name="tp_product_id" invisible="1"/>
                                    <field name="product_tmpl_id" invisible="1"/>
                                    <field name="category_id" invisible="1"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>