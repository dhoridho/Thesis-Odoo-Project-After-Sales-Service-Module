<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_form_purchase_request" model="ir.ui.view">
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="equip3_purchase_other_operation.view_form_purchase_request"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_pr_to_pt']" position="after">
                <field name="is_purchase_req_direct_purchase" invisible="1"/>
            </xpath>
            <button name="create_purchase_tender" position="after">
                <button string="Create Direct Purchase" name="create_direct_purchase" type="object" class="oe_highlight" attrs="{'invisible':['|', '|', ('state','!=','purchase_request'), ('is_purchase_req_direct_purchase','=', False), ('purchase_req_state','not in', ('pending','in_progress'))]}"/>
            </button>
        </field>
    </record>

