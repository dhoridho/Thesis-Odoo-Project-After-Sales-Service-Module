<?xml version ="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form_purchase_inherit_direct" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.purchase.inherit.direct</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="equip3_purchase_operation.res_config_settings_view_form_purchase_inherit_exp_date" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='purchase_request_document']/div/div[@class='app_settings_block']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@id='purchase_request_document']" position="after">
                <div id="purchase_direct_document" groups="equip3_purchase_operation.group_pr_purchase_document">
                    <h2>Direct Purchase Document</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="app_settings_block">
                            <div class="row mt16 o_settings_container">
                                <div class="col-12 col-lg-6 o_setting_box">
                                    <div class="o_setting_left_pane">
                                        <field class="col-2" name="direct_control" />
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label for="direct_control"/>
                                        <div class="text-muted">
                                            Set Control Quantity and Budget for Direct Purchase
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-6 o_setting_box"/>
                                <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible':[('direct_control','=',False)]}">
                                    <div class="o_setting_left_pane" />
                                    <div class="o_setting_right_pane">
                                        <label for="qty_limit"/>
                                        <field class="col-6" name="qty_limit" />
                                    </div>
                                </div>
                                <div class="col-12 col-lg-6 o_setting_box"/>
                                <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible':[('direct_control','=',False)]}">
                                    <div class="o_setting_left_pane" />
                                    <div class="o_setting_right_pane">
                                        <label for="budget_limit"/>
                                        <field class="col-6" name="budget_limit" />
                                    </div>
                                </div>
                            </div>
                            <div class="row mt16 o_settings_container">
                                <div class="col-12 col-lg-offset-6 col-lg-6 o_setting_box">
                                    <div class="o_setting_left_pane">
                                        <field name="is_email_notification_direct_purchase" />
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label for="is_email_notification_direct_purchase" />
                                        <p class='text-muted'>Email Notification for Direct purchase.</p>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-offset-6 col-lg-6 o_setting_box">
                                    <div class="o_setting_left_pane">
                                        <field name="is_whatsapp_notification_direct_purchase" />
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label for="is_whatsapp_notification_direct_purchase" />
                                        <p class='text-muted'>Whatsapp Notification for Direct purchase.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="purchase_vendor_document" groups="equip3_purchase_operation.group_pr_purchase_document">
                    <h2>Vendor Purchase Limit</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane"></div>
                            <div class="o_setting_right_pane">
                                <label for="vendor_purchase_limit" />
                                <div class="text-muted">
                                    Default Vendor purchase limit (set the default purchase limit amount for new vendor)
                                </div>
                                <div class="mt8">
                                    <field name="vendor_purchase_limit" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>