<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="email_template_direct_purchase" model="mail.template">
        <field name="name">Reminder for Direct Purchase Approval</field>
        <field name="email_from">${ctx.get('email_from')}</field>
        <field name="email_to">${ctx.get('email_to')}</field>
        <field name="subject">Reminder for Direct Purchase Approval</field>
        <field name="model_id" ref="equip3_purchase_other_operation_cont.model_purchase_order"/>
        <field name="auto_delete" eval="True"/>
        <field name="body_html"><![CDATA[
            <p>Date: ${ctx.get('date')}</p>
            <p>Subject : Reminder for Direct Purchase Approval</p>
            </br>
            <p>Dear ${ctx.get('approver_name')},</p>
            <p>Based on the Direct Purchase Approval Request ${object.name}.</p>
            <p>You have approval pending that need your decision to approve or reject the Direct Purchase Approval Request from ${object.request_partner_id.name}.</p>
            </br>
            <p>You can approve or reject the Direct Purchase request by clicking this button:</p>
            <div style = "margin: 16px;">
                <a href=${ctx.get('url')} style = "padding: 5px 10px; font-size: 12px; line-height: 18px;
                 color: #FFFFFF; border-color:#875A7B; text-decoration: none; display: inline-block; 
                 margin-bottom: 0px; font-weight: 400; text-align: center; vertical-align: middle; 
                 cursor: pointer; white-space: nowrap; background-image: none; background-color: #875A7B;
                 border: 1px solid #875A7B; border-radius:3px">View ${object.name}</a></div>
            <p>Thank you.</p>
            ]]></field>
    </record>

    <record id="email_template_direct_purchase_approval" model="mail.template">
        <field name="name">Reminder for Direct Purchase Approval</field>
        <field name="email_from">${ctx.get('email_from')}</field>
        <field name="email_to">${ctx.get('email_to')}</field>
        <field name="subject">Reminder for Direct Purchase Approval</field>
        <field name="model_id" ref="equip3_purchase_other_operation_cont.model_purchase_order"/>
        <field name="auto_delete" eval="True"/>
        <field name="body_html"><![CDATA[
            <p>Date: ${ctx.get('date')}</p>
            <p>Subject : Reminder for Direct Purchase Approval</p>
            </br>
            <p>Dear ${ctx.get('user_name')},</p>
            <p>Based on the Direct Purchase Approval Request ${object.name}.</p>
            <p>You have approval pending that need your decision to approve or reject the Direct Purchase Approval Request from ${object.request_partner_id.name}.</p>
            <p>For the Information, the previous approver was ${ctx.get('submitter')}</p>
            </br>
            <p>You can approve or reject the Direct Purchase request by clicking this button:</p>
            <div style = "margin: 16px;">
                <a href=${ctx.get('url')} style = "padding: 5px 10px; font-size: 12px; line-height: 18px;
                 color: #FFFFFF; border-color:#875A7B; text-decoration: none; display: inline-block; 
                 margin-bottom: 0px; font-weight: 400; text-align: center; vertical-align: middle; 
                 cursor: pointer; white-space: nowrap; background-image: none; background-color: #875A7B;
                 border: 1px solid #875A7B; border-radius:3px">View ${object.name}</a></div>
            <p>Thank you.</p>
            ]]></field>
    </record>

    <record id="email_template_direct_purchase_approved" model="mail.template">
        <field name="name">Reminder for Direct Purchase has been Approved</field>
        <field name="email_from">${ctx.get('email_from')}</field>
        <field name="email_to">${ctx.get('email_to')}</field>
        <field name="subject">Reminder for Direct Purchase has been Approved</field>
        <field name="model_id" ref="equip3_purchase_other_operation_cont.model_purchase_order"/>
        <field name="auto_delete" eval="True"/>
        <field name="body_html"><![CDATA[
            <p>Date: ${ctx.get('date')}</p>
            <p>Subject : Reminder for Direct Purchase has been Approved</p>
            </br>
            <p>Dear ${object.request_partner_id.name},</p>
            <p>Based on the Direct Purchase Approval Request ${object.name}.</p>
            <p>Your Direct Purchase approval request has been Approved.</p>
            </br>
            <p>You can Confirm or Cancel the Direct Purchase by clicking this button:</p>
            <div style = "margin: 16px;">
                <a href=${ctx.get('url')} style = "padding: 5px 10px; font-size: 12px; line-height: 18px;
                 color: #FFFFFF; border-color:#875A7B; text-decoration: none; display: inline-block; 
                 margin-bottom: 0px; font-weight: 400; text-align: center; vertical-align: middle; 
                 cursor: pointer; white-space: nowrap; background-image: none; background-color: #875A7B;
                 border: 1px solid #875A7B; border-radius:3px">View ${object.name}</a></div>
            <p>Thank you.</p>
            ]]></field>
    </record>

    <record id="email_template_direct_purchase_approval_rejected" model="mail.template">
        <field name="name">Reminder for Direct Purchase has been Rejected</field>
        <field name="email_from">${ctx.get('email_from')}</field>
        <field name="email_to">${ctx.get('email_to')}</field>
        <field name="subject">Reminder for Direct Purchase has been Rejected</field>
        <field name="model_id" ref="equip3_purchase_other_operation_cont.model_purchase_order"/>
        <field name="auto_delete" eval="True"/>
        <field name="body_html"><![CDATA[
            <p>Date: ${ctx.get('date')}</p>
            <p>Subject : Reminder for Direct Purchase has been Rejected</p>
            </br>
            <p>Dear ${object.request_partner_id.name},</p>
            <p>Based on the Direct Purchase Approval Request ${object.name}.</p>
            <p>Your Direct Purchase approval request has been Rejected.</p>
            </br>
            <p>You can check the Direct Purchase by clicking this button:</p>
            <div style = "margin: 16px;">
                <a href=${ctx.get('url')} style = "padding: 5px 10px; font-size: 12px; line-height: 18px;
                 color: #FFFFFF; border-color:#875A7B; text-decoration: none; display: inline-block; 
                 margin-bottom: 0px; font-weight: 400; text-align: center; vertical-align: middle; 
                 cursor: pointer; white-space: nowrap; background-image: none; background-color: #875A7B;
                 border: 1px solid #875A7B; border-radius:3px">View ${object.name}</a></div>
            <p>Thank you.</p>
            ]]></field>
    </record>

</odoo>
