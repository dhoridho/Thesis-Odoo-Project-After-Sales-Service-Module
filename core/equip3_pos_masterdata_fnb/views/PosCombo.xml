<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record id="pos_combo_form_view" model="ir.ui.view">
        <field name="name">pos.combo.form</field>
        <field name="model">pos.combo</field>
        <field name="arch" type="xml">
           	<form> 
	            <sheet>
	                <group>
	                    <group>
	                        <field name="product_tmpl_id" invisible="1"/>
	                        <field name="name"/>
	                        <field name="maximum_pick" attrs="{'required':[('required','=',True)]}"/>
	                    </group>
	                    <group>
	                        <field name="required"/>
	                    </group>
	                </group>
	                <group string="Options">
	                    <field name="option_ids" 
	                        nolabel="1"
	                        context="{ 
	                            'tree_view_ref': 'equip3_pos_masterdata_fnb.pos_combo_option_tree_view',
	                            'form_view_ref': 'equip3_pos_masterdata_fnb.pos_combo_option_form_view',
	                        }"/>
	                </group>
	            </sheet>
	        </form>
        </field>
    </record>

	<record id="pos_combo_option_form_view" model="ir.ui.view">
        <field name="name">pos.combo.option.form</field>
        <field name="model">pos.combo.option</field>
        <field name="arch" type="xml">
            <form>
               	<sheet>
                    <group>
                        <group>
                            <field name="product_id" 
                                options="{'no_create': True, 'no_edit': True}"
                            	context="{
                            		'default_type': 'product',
                            		'default_available_in_pos': True,
                            	}"/>
                        </group> 
                        <group>
                            <field name="extra_price"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pos_combo_option_tree_view" model="ir.ui.view">
        <field name="name">pos.combo.option.tree</field>
        <field name="model">pos.combo.option</field>
        <field name="arch" type="xml">
            <tree multi_edit="1">
                <field name="product_id"/>
                <field name="extra_price"/>
                <!-- <field name="pos_bom_line_ids" widget="many2many_tags"/> -->
            </tree>
        </field>
    </record>


</odoo>