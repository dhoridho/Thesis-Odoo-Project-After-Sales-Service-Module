<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record id="view_pos_pos_form_inherit" model="ir.ui.view">
        <field name="name">view.pos.pos.form.inherit</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='products']" position="after">
                <page string="Details" name="details">
                    <field name="line_details_ids" colspan="4" nolabel="1" readonly="1">
                        <tree string="Details" editable="bottom">
                            <field name="product_id"/>
                            <field name="product_component_id"/>
                            <field name="is_extra"/>
                            <field name="price" sum="Price"/>
                            <field name="quantity"/>
                            <field name="product_uom_id"/>
                            <field name="order_id" invisible="1"/>
                            <field name="pos_order_line_id" invisible="1"/>
                        </tree>
                        <form string="Details">
                            <group col="4">
                                <field name="product_id"/>
                                <field name="product_component_id"/>
                                <field name="is_extra"/>
                                <field name="price"/>
                                <field name="quantity"/>
                                <field name="product_uom_id"/>
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>