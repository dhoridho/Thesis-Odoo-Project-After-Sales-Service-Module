<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

	<t t-name="ComplementaryButton" owl="1">
        <t t-if="env.pos.config.is_complementary">
            <div class="control-button">
                <span>
                    <span>
                    Compliment
                    </span>
                </span>
            </div>
        </t>
        <t t-else="">
            <span class="no-complimentary oe_hidden"></span>
        </t>
 <!--        <t t-else="">
            <span class="control-button">
                <span>
                    <i class="fa fa-gift"></i>
                    Compliment
                </span>
            </span>
        </t> -->
    </t>
    
    <t t-name="PopUpCardComplementaryNote" owl="1">
        <div class="modal-dialog">
            <div class="popup complementarynotepopup">
            	<header class="title drag-handle">
                        Complimentary Note
                </header>
                <main class="body">
                   	<div class="parent_cl">
                   		<div class="label_cl">
                   			<label for="quantity">
                   				QTY:
	                   		</label>
    	               	</div>
        	           	<div class="input_cl">
            	       		<input type="number" name="quantity"/>
                	   	</div>

                	   	<div class="label_cl">
                   			<label for="quantity">
                   				Item Selected:
	                   		</label>
    	               	</div>
        	           	<div class="input_cl">
            	       		<select name="product" id="product">
								<t t-foreach="props.product_data" t-as="pr">
									<option t-att-value="pr.id">
										<t t-esc="pr.display_name or pr.name"/>
									</option>
								</t>
							</select>
                	   	</div>
                	   	
                   		<div class="label_cl">
                   			<label for="notes">
                   				Notes:
	                   		</label>
    	               	</div>
        	           	<div class="input_cl">
            	       		<input type="char" name="notes"/>
                	   	</div>                   
                	</div>
                </main>
                <footer class="footer">
                    <div class="button confirm" t-on-click="confirm">
                        ok
                    </div>
                    <div class="button cancel" t-on-click="cancel">
                        cancel
                    </div>
                </footer>
            </div>
        </div>
    </t>

    <t t-name="ProductScreenComplement" t-inherit="point_of_sale.ProductScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('product-screen')]//div//div[2]/div[2]" position="inside">
            <!-- <ComplementaryButton orderLineSection='1'/> -->
        </xpath>
    </t>

    <t t-name="ComplementaryProductScreenSection1Ext" t-inherit="equip3_pos_general.ProductScreenSection1" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('custom_row3')]" position="inside">
            <ComplementaryButton/>
        </xpath>
        <xpath expr="//div[hasclass('custom_row_mobile')]" position="inside">
            <ComplementaryButton/>
        </xpath>
    </t>

</templates>