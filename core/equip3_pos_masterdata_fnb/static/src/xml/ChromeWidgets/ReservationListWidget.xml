<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="ReservationListWidget" owl="1">
        <div class="ticket-button reservation-list-header-button" 
            style="position: relative;"
            t-att-class="{ oe_hidden: isHidden}" t-on-click="onClick">
            <div class="with-badge" 
                style="left: -17px; position: absolute;"
                t-att-badge="count">
            </div>
            <div  class="header-text">Reservations</div>
        </div>
    </t>

    <t t-name="ReservationListWidgetHeaderButtons" t-inherit="equip3_pos_masterdata.RightHeaderButtons" 
        t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('right-header-button')]" position="inside">
            <ReservationListWidget t-if="env.pos.config.table_reservation_list"/>
        </xpath>
    </t> 

</templates>

