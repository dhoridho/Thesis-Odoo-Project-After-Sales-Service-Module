<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="EmployeeMealList" owl="1">
        <div class="ticket-screen screen employe-meal-list" t-on-activate-edit-mode="activateEditMode">
            <div class="screen-content">
                <div class="controls">
                    <div class="buttons">
                        <button class="highlight" t-on-click="back">
                            <i class="fa fa-chevron-left"></i>
                            <t t-if="!env.isMobile"> Back</t>
                        </button>
                    </div>
                    <SearchBar automaticSearchEmployeeMeal="true" t-if="!state.detailIsShown" config="searchBarConfig" placeholder="'Search Employee...'"/>
                    <button class="button-right" t-on-click="clearSearch">
                        <i class="fa fa-refresh "></i>
                        <t t-if="!env.isMobile"> Show All</t>
                    </button>
                </div>
                <table class='summary-table' t-if="getEmployees and getEmployees.length != 0" style="display: table; width:100%;">
                    <colgroup>
                        <col width="30%"/>
                        <col width="40%"/>
                        <col width="30%"/>
                    </colgroup>
                    <tr class="receipt-line header">
                        <td style="text-align: left">
                            No.
                        </td>
                        <td style="text-align: center">
                            Name
                        </td>
                        <td style="text-align: right">
                            Remaining Budget
                        </td>
                    </tr>
                    <t t-set="number" t-value="1"/>
                    <t t-foreach="getEmployees" t-as="employee" t-key="employee.id">
                        <EmployeeMealRow employee="employee"
                            number="number"
                            t-att-class="{'highlight': getHighlight}"
                            t-on-click-employee="clickEmployee"
                            detailIsShown="state.detailIsShown"/> 
                        <t t-set="number" t-value="number +1"/>
                    </t>
                </table>
                <t t-else="">
                    <h1 class="loading-employee-meals">... NOT FOUND ANY EMPLOYEE ...</h1>
                </t>
            </div>
        </div>
    </t>

</templates>
