<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="EmployeeMealRow" owl="1">
        <t t-set="employee" t-value="props.employee"/>
        <tr class="receipt-line"
            t-on-mouseover.stop="_autoSyncBackend"
            t-on-click="trigger('click-employee', {employee: employee})">
            <td style="text-align: left">
                <span><t t-esc="props.number"/>.</span>
            </td> 
            <td style="text-align: center">
                <span style="text-transform:capitalize;">
                    <t t-esc="employee.name or 'N/A'"/>
                </span>
            </td>
            <td style="text-align: right">
                <t t-esc="employee.remaining_budget and getformatCurrency(employee.remaining_budget) or 'N/A'"/>
            </td>
        </tr>
    </t>
</templates>
