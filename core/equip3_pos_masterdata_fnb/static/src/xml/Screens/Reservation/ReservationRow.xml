<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="ReservationRow" owl="1">
        <t t-set="order" t-value="props.order"/>
        <tr class="receipt-line"
            t-on-mouseover.stop="_autoSyncBackend"
            t-on-click="trigger('click-order', {order: order})">
            <td style="text-align: center">
                <t t-esc="order.name"/>
            </td>
            <td style="text-align: center">
                <t t-esc="order.customer_name or 'N/A'"/>
            </td>
            <td style="text-align: center">
                <t t-esc="order.cust_phone_no or 'N/A'"/>
            </td>
            <td style="text-align: center">
                <t t-esc="order.reservation_from or 'N/A'"/>
            </td>
            <td style="text-align: center">
                <t t-esc="order.reservation_to or 'N/A'"/>
            </td>
            <td style="text-align: center">
                <t t-esc="order.table_floor and order.table_floor[1] or 'N/A'"/>
            </td>
            <td style="text-align: center">
                <t t-esc="order.table_no and order.table_no[1] or 'N/A'"/>
            </td>
            <td style="text-align: center"> 
                <t t-if="order.state == 'reserved'">Reserved</t>
                <t t-if="order.state == 'arrived'">Arrived</t>
                <t t-if="order.state == 'cancel'">Cancelled</t>
            </td>
            <td style="vertical-align:middle;text-align:left;">
                <span>
                    <t t-if="order.state != 'cancel'">
                        <button class="cancel-button" 
                            t-on-click.stop="cancelOrder(order)">Cancel</button>
                    </t>
                </span>
            </td>
        </tr>
    </t>
</templates>
