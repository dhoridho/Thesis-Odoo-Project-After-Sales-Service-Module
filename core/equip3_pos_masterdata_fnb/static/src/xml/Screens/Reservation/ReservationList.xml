<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="ReservationList" owl="1">
        <div class="ticket-screen screen reservation-list reservation-list-tmp" t-on-activate-edit-mode="activateEditMode">
            <div class="screen-content">
                <div class="controls">
                    <div class="buttons">
                        <button class="highlight button_back" t-on-click="back">
                            <i class="fa fa-chevron-left"></i>
                            <t t-if="!env.isMobile"> Back</t>
                        </button>
                    </div>
                    <SearchBar automaticSearchOrder="true" t-if="!state.detailIsShown" config="searchBarConfig" placeholder="'Search Reservation...'"/>
                    <button class="button-right" t-on-click="clearSearch">
                        <i class="fa fa-refresh "></i>
                        <t t-if="!env.isMobile"> Show All</t>
                    </button>
                </div>
                <div t-if="state.detailIsShown" class="client-details-contents subwindow-container-fix">
                    <ReservationDetail order="state.editModeProps.order" t-props="state.editModeProps"/>
                    <!-- TODO: when props change, ReservationDetail will change, It reason we call t-props
                    -->
                </div>
                <table class='summary-table' t-if="getOrders and getOrders.length != 0">
                    <colgroup>
                        <col width="15%"/>
                        <col width="15%"/>
                        <col width="15%"/>
                        <col width="15%"/>
                        <col width="15%"/>
                        <col width="10%"/>
                        <col width="10%"/>
                        <col width="5%"/>
                    </colgroup>
                    <tr class="receipt-line header">
                        <td style="text-align: center">
                            Reservation ID
                        </td>
                        <td style="text-align: center">
                            Customer Name
                        </td>
                        <td style="text-align: center">
                            Phone Number
                        </td>
                        <td style="text-align: center">
                            Reservation Form
                        </td>
                        <td style="text-align: center">
                            Reservation To
                        </td>
                        <td style="text-align: center">
                            Table Floor
                        </td>
                        <td style="text-align: center">
                            Table No
                        </td>
                        <td style="text-align: center">
                            Status
                        </td>
                        <td colspan="2">
                            Action
                        </td>
                    </tr>
                    <t t-set="number" t-value="1"/>
                    <t t-foreach="getOrders" t-as="order" t-key="order.id">
                        <ReservationRow order="order"
                              number="number"
                              t-att-class="{'highlight': getHighlight}"
                              selectedOrder="state.selectedOrder"
                              detailIsShown="state.detailIsShown"
                              t-on-click-cancel="clickCancel"
                              t-on-click-order="clickOrder"/> 
                                      <!-- matching to (1) of PosOrderRow-->
                        <t t-set="number" t-value="number +1"/>
                    </t>
                </table>
                <t t-else="">
                    <h1 class="loading-orders">... NOT FOUND ANY RESERVATION ...</h1>
                </t>
            </div>
        </div>
    </t>

</templates>
