<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">

    <t t-name="TableWidget" t-inherit="pos_restaurant.TableWidget" t-inherit-mode="extension" owl="1">
        <xpath expr="//span[hasclass('label')]" position="before">
            <t t-if="env.pos.config.send_order_to_kitchen">
                <t t-if='getCountItemsWaitingDelivery'>
                    <span class="order-waiting-delivery" title="Waiting you delivery products to customers"><t t-esc='getCountItemsWaitingDelivery'/></span>
                </t>
            </t>
        </xpath>
        <xpath expr="//span[hasclass('table-cover')]" position="inside">
            <t t-if="env.pos.config.send_order_to_kitchen">
                <t t-if="checkIsLocked">
                    <i class="fa fa-lock"/>
                </t>
            </t>
        </xpath>
        <xpath expr="//span[hasclass('label')]" position="inside">
            <t t-if="checkedIn">
                <span class="table-checked-in"><i class="fa fa-calendar-check-o" aria-hidden="true"></i> <t t-esc="tableInformation['checkedIn']"/></span>
                <span class="table-amount"><i class="fa fa-shopping-basket" aria-hidden="true"></i> <t t-esc="env.pos.format_currency(tableInformation['amount'],false,tableInformation['currency'])"/></span>
            </t>
        </xpath>
        <xpath expr="//span[hasclass('table-seats')]" position="after">
            <span class="table-arrive-in-time" style="background:white;color: green;font-size: 13px;top: 2px;position: absolute;left: 2px;line-height:1">
            </span>
            <span class="table-arrive-out-time" style="background:white;color: red;font-size: 13px;top: 2px;position: absolute;left: 2px;line-height:1">
            </span>
        </xpath>
    </t>

</templates>
