<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    
    <t t-name="FloorScreen" t-inherit="pos_restaurant.FloorScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//t[@t-foreach='activeTables']" position="replace">
            <t t-foreach="activeTables" t-as="table" t-key="table.id">
                <TableWidget t-att-class="'hm_table_'+table.id" t-if="table.id !== state.selectedTableId" table="table" selFloor="state.selectedFloorId"/>
                <EditableTable t-else="" table="table" />
            </t>
        </xpath>
        <xpath expr="//div[hasclass('floor-screen')]" position="attributes">
            <attribute name="t-att-class">{ oe_hidden: !props.isShown }</attribute>
        </xpath>
    </t>

</templates>
