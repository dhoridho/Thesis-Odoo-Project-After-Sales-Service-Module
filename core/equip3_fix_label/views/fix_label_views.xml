<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="fix_label_view" model="ir.ui.view">
        <field name="name">fix_label_view</field>
        <field name="model">fix.label</field>
        <field name="arch" type="xml">
            <form>
                <label for="selection_by_history_or_data">
                    Get Data By :
                </label>
                <field name="selection_by_history_or_data"/>
                <group>
                    <group>
                        <field name="mass_edit" attrs="{'invisible': [('selection_by_history_or_data', '=', 'history')]}"/>
                    </group>
                    <group>
                    </group>
                </group>
                <field name="notes" attrs="{'invisible': [('mass_edit', '=', False)]}" readonly="1"/>
                <notebook>
                    <page name="name" string="Fields">
                        <field name="fix_label_line_ids" force_save="1">
                            <tree editable="top" delete="false" create="false">
                                <field name="name" readonly="1" force_save="1"/>
                                <field name="model_id" readonly="1" force_save="1"/>
                                <field name="field_description" force_save="1"/>
                                <field name="field_description_origin" force_save="1" invisible="1"/>
                                <field name="type" readonly="1" force_save="1"/>
                                <field name="ir_model_field_id" readonly="1" force_save="1" invisible="1"/>
                                <field name="is_rename" readonly="1" force_save="1" invisible="1"/>
                            </tree>
                        </field>
                    </page>
                </notebook>

                <footer>
                    <button name="confirm" string="Confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="fix_label_action" model="ir.actions.act_window">
        <field name="name">Fix Label</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">fix.label</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_fix_label"
      name="Fix Label"
      parent="base.menu_custom"
      sequence="11"
      groups="base.group_no_one"
      action="fix_label_action"/>

</odoo>
