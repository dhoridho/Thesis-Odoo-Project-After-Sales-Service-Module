<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="clear_cache_wizard_form" model="ir.ui.view">
        <field name="name">clear.cache.wizard.form</field>
        <field name="model">clear.cache.wizard</field>
        <field name="arch" type="xml">
            <form>
                <div>
                    <b>Are you sure to clean cache data ?</b>
                </div>
                <footer>
                    <button name="do_clear_caches" type="object" string="Clear Cache" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
