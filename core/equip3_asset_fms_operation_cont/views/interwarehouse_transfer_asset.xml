<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="interwarehouse_transfer_asset_form_inherit" model="ir.ui.view">
            <field name="name">model.name.view.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='button_validate']" position="after">
                    <field name="is_asset_created" invisible="1"/>
                    <field name="is_asset_product" invisible="1"/>
                    <button name="create_assets" type="object" string="Create Asset" class="oe_highlight" groups="stock.group_stock_user" attrs="{'invisible':['|', '|',('state', '!=', 'done'), ('is_asset_created', '=', True), ('is_asset_product', '=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>