<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- create.asset.wizard form view -->
    <record id="create_asset_wizard_view_form" model="ir.ui.view">
        <field name="name">create.asset.wizard.view.form</field>
        <field name="model">create.asset.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Asset">
                <sheet>
                    <group>
                        <field name="picking_id" readonly="1"/>
                    </group>
                    <notebook>
                        <page name="asset" string="Asset List">
                            <field name="create_asset_ids" nolabel="1">
                                <tree create="0" editable="bottom">
                                    <field name="product_id" readonly="1"/>
                                    <field name="asset_name"/>
<!--                                    <field name="is_asset" invisible="1"/>-->
<!--                                    <field name="filter_account_asset_ids" invisible="1"/>-->
                                    <field name="account_asset_id"  required="1"/>
                                    <field name="asset_type" widget="selection"/>
                                    <field name="serial_number"/>
                                    <field name="asset_cat"/>
                                    <field name="held_by_id" required="1"/>
                                    <field name="fac_area"/>
                                    <field name="eff_date"/>
                                    <field name="owner"/>
                                    <field name="part_sn_ids" widget="many2many_tags" invisible="1"/>
                                    <field name="asset_value" invisible="1"/>
                                </tree>
                                <form create="0" invisible="1">
                                    <style>
                                        .btn-primary:nth-child(2){
                                            display:none !important;
                                        }
                                    </style>
                                    <group>
                                        <group>
                                            <field name="product_id" readonly="1"/>
                                            <field name="asset_name"/>
                                            <field name="account_asset_id"  required="1"/>
                                            <field name="asset_type" widget="selection"/>
                                            <field name="serial_number"/>
                                        </group>
                                        <group>
                                            <field name="asset_cat"/>
                                            <field name="held_by_id" required="1"/>
                                            <field name="fac_area"/>
                                            <field name="eff_date"/>
                                            <field name="owner"/>
                                        </group>
                                    </group>
                                    <notebook>
                                        <page string="Parts">
                                            <field name="part_sn_ids">
                                                <tree editable="bottom" create="0">
                                                    <field name="asset_part_id" force_save="1" readonly="1"/>
                                                    <field name="category_id"/>
                                                    <field name="sn" force_save="1"/>
                                                </tree>
                                            </field>
                                        </page>
                                    </notebook>
                                </form>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                        <button name="create_asset" type="object" string="Create Asset" class="oe_highlight" default_focus="1" icon="fa-plus"/>
                        <button string="Cancel" special="cancel" icon="fa-times-circle"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
