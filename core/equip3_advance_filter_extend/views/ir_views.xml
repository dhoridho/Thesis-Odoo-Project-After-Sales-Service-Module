<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="filter_pending_my_approval_form_view" model="ir.ui.view">
        <field name="name">filter_pending_my_approval_form_view</field>
        <field name="priority">999</field>
        <field name="model">ir.filters</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="new_model_id"   required="1" options="{'no_edit':1,'no_open':1}" string="Model" domain='[("model","in",["sale.order","purchase.order","purchase.request","stock.picking","product.supplierinfo","account.move"])]'/>
                            <field name="model_id"   required="1" invisible="1"/>
                            <field name="user_ids"  widget='many2many_tags' invisible="1"/>
                            <field name="is_default" />
                            <field name="is_filter_pending_my_approval" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>



    <record id="filter_pending_my_approval_act_view" model="ir.actions.act_window">
        <field name="name">Filters Pending My Approval</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ir.filters</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'show_detail_field':1,'show_detail_field_relation':1,'form_view_ref':'equip3_advance_filter_extend.filter_pending_my_approval_form_view','default_is_filter_pending_my_approval': True,'default_selection':'filter','default_is_custom':False}</field>
        <field name="domain">[('is_filter_pending_my_approval','=',True)]</field>
    </record>


    <menuitem id="advance_filter_management.advance_filter_management_menu" name="Filter Management" groups="advance_filter_management.group_filters_user" parent="base.menu_administration"/> 


    <menuitem id="custom_advance_filter_management_menu" name="Filters Custom" action="advance_filter_management.action_advance_filter_management" parent="advance_filter_management.advance_filter_management_menu" sequence="1" /> 


    <menuitem id="filter_pending_my_approval_menu_view" name="Filters Pending My Approval" action="filter_pending_my_approval_act_view" parent="advance_filter_management.advance_filter_management_menu"  sequence="2"/> 


    <record id="advance_filter_management.advance_filter_management_menu" model="ir.ui.menu">
        <field name="web_icon" eval="False"/>
    </record>

 </odoo>
