<odoo>

    <record id="hr_employee_view_form_inherit_hr_expense" model="ir.ui.view">
        <field name="name">hr.employee.view.form.expense</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_expense.hr_employee_view_form_inherit_expense"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='expense_manager_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}</attribute>
            </xpath>
             
        </field>
    </record>
    
    <record id="employee_expense_limit_id" model="ir.ui.view">
        <field name="name">employee.expense.limit.id</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//notebook" position="inside">
                <page string="Expense Limit" name="expense_limit">
                    <field name="employee_expense_line" nolabel="1">
                        <tree string="Expense Line" editable="bottom">
                            <field name="product_id" domain="[('can_be_expensed','=',True)]"/>
                            <field name="limit"/>

                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>