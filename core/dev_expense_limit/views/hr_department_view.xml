<odoo>
    <record id="hr_expense_department_view" model="ir.ui.view">
        <field name="name">hr.expense.department.view</field>
        <field name="model">hr.department</field>
        <field name="inherit_id" ref="hr.view_department_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <notebook>
                    <page string="Expense Limit" >
                        <field name="department_expense_line" nolabel="1">
                            <tree string="Department Expense Lines"  editable="bottom">
                                <field name="product_id" domain="[('can_be_expensed','=',True)]" required="1"/>
                                <field name="limit"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>

        </field>
    </record>
</odoo>