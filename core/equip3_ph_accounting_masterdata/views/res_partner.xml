<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ph_accounting_res_partner_inherit" model="ir.ui.view">
        <field name="name">res.partner.view.form.inherit.new.column</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="attributes">
                <attribute name="invisible">0</attribute>
                <attribute name="string">Tax ID</attribute>
                <attribute name="placeholder">e.g 123-456-789-111</attribute>
            </xpath>
        </field>
    </record>

</odoo>
