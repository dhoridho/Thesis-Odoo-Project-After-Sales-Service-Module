<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <template id="maintenance_report_id">
    	<t t-call="web.html_container">         <!--   #odoo13    -->
          <t t-foreach="docs" t-as="doc">
            <t t-call="web.internal_layout">
                 <div class="page">
                    <div class="container">
                     
                        <h3 class="text-center">
                            Maintenance Request
                        </h3>
                        <br></br>
                        <div class="row">
                             <div class="col-12">
                                 <h3>
                                     <span t-field="doc.name"/> - <span t-field="doc.stage_id.name"/>
                                 </h3>
                             </div>
                         </div>
                         <br/><br/>
                         <table class="table table-bordered" style="border:1px solid;">
                            <tr style="border: 2px solid black;">
                                <td style="border: 2px solid black;">
                                    <strong>Requested By:</strong>
                                </td>
                                <td style="border: 2px solid black;">
                                    <span t-field="doc.owner_user_id.name"/>
                                </td>
                                <td style="border: 2px solid black;">
                                    <strong>Request Date:</strong>
                                </td>
                                <td style="border: 2px solid black;">
                                    <span t-field="doc.request_date"/>
                                </td>
                                
                            </tr>
                            <tr style="border: 2px solid black;" >
                                <td style="border: 2px solid black;">
                                    <strong>Equipment:</strong>
                                </td>
                                <td style="border: 2px solid black;">
                                    <span t-field="doc.equipment_id.name"/>
                                </td>
                                <td style="border: 2px solid black;">
                                    <strong>Category:</strong>
                                </td>
                                <td style="border: 2px solid black;">
                                    <span t-field="doc.category_id.name"/>
                                </td>
                                
                            </tr>
                            <tr  style="border: 2px solid black;">
                                <td style="border: 2px solid black;">
                                    <strong>Team:</strong>
                                </td>
                                <td style="border: 2px solid black;">
                                    <span t-field="doc.maintenance_team_id.name"/>
                                </td>
                                <td style="border: 2px solid black;">
                                    <strong>Scheduled Date:</strong>
                                </td>
                                <td style="border: 2px solid black;">
                                    <span t-field="doc.schedule_date"/>
                                </td>
                                
                            </tr>
                            <tr  style="border: 2px solid black;">
                                <td style="border: 2px solid black;">
                                    <strong>Responsible:</strong>
                                </td>
                                <td style="border: 2px solid black;">
                                    <span t-field="doc.user_id.name"/>
                                </td>
                                <td style="border: 2px solid black;">
                                    <strong>Priority:</strong>
                                </td>
                                <td style="border: 2px solid black;">
                                    <span t-field="doc.priority"/>
                                </td>
                                
                            </tr>
                            <tr  style="border: 2px solid black;">
                                <td style="border: 2px solid black;">
                                   <strong>Maintenance Type:</strong>
                               
                                </td>
                                <td style="border: 2px solid black;">
                                     <span t-field="doc.maintenance_type"/>
                                </td>
                                <td style="border: 2px solid black;">
                                    <strong>Close Date:</strong>
                                
                                </td>
                                <td style="border: 2px solid black;">
                                    <span t-field="doc.close_date"/>
                                </td>
                                
                            </tr>
                         </table>
