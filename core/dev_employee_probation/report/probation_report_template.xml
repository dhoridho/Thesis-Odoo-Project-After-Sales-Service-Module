<odoo>
    <template id="main_probation_template">
        <t t-call="web.external_layout">
            <div class="page" style="font-size:11px;">
                <h3>
                    <center>
                        <span t-esc="o.name"/>
                    </center>
                </h3>
                <!--first row-->
                <table width="100%" style="margin-top: 10px;">
                    <tr style="line-height: 25px;font-size: 14px;">
                        <th width="50%" colspan="3">Employee</th>
                        <th width="10%"></th>
                        <th width="40%" colspan="3">Probation</th>
                    </tr>
                    <tr style="line-height: 15px;">
                        <td width="15%">Employee</td>
                        <td width="5%">:</td>
                        <td width="30%">
                            <span t-esc="o.employee_id and o.employee_id.name or ''"/>
                        </td>
                        <td width="10%"></td>
                        <td width="15%">Start Date</td>
                        <td width="5%">:</td>
                        <td width="20%">
                            <span t-esc="date_conversion(o.start_date)"/>
                        </td>
                    </tr>
                    <tr style="line-height: 15px;">
                        <td width="15%">Email</td>
                        <td width="5%">:</td>
                        <td width="30%">
                            <span t-esc="o.employee_email"/>
                        </td>
                        <td width="10%"></td>
                        <td width="15%">End Date</td>
                        <td width="5%">:</td>
                        <td width="20%">
                            <span t-esc="date_conversion(o.end_date)"/>
                        </td>
                    </tr>
                    <tr style="line-height: 15px;">
                        <td width="15%">Department</td>
                        <td width="5%">:</td>
                        <td width="30%">
                            <span t-esc="o.department_id and o.department_id.name or ''"/>
                        </td>
                        <td width="10%"></td>
                        <td width="15%"></td>
                        <td width="5%"></td>
                        <td width="20%"></td>
                    </tr>
                    <tr style="line-height: 15px;">
                        <td width="15%">Manager</td>
                        <td width="5%">:</td>
                        <td width="30%">
                            <span t-esc="o.manager_id and o.manager_id.name or ''"/>
                        </td>
                        <td width="10%"></td>
                        <td width="15%"></td>
                        <td width="5%"></td>
                        <td width="20%"></td>
                    </tr>
                    <tr style="line-height: 15px;">
                        <td width="15%">Company</td>
                        <td width="5%">:</td>
                        <td width="30%">
                            <span t-esc="o.company_id and o.company_id.name or ''"/>
                        </td>
                        <td width="10%"></td>
                        <td width="15%"></td>
                        <td width="5%"></td>
                        <td width="20%"></td>
                    </tr>
                </table>
                <!--hotel details-->
                <span t-if="o.review_ids">
                    <div style="font-weight: bold;font-size: 14px;margin-bottom: 5px;margin-top: 20px;">
                        Reviews
                    </div>
                    <table width="100%" style="font-size: 14px;table-layout: fixed;" class="table table-condensed">
                        <tr style="word-wrap: break-word;line-height: 12px;">
                            <th style="border-bottom: 2px solid black;border-top: 1px solid white;">Date</th>
                            <th style="border-bottom: 2px solid black;border-top: 1px solid white;">Reviewer</th>
                            <th style="border-bottom: 2px solid black;border-top: 1px solid white;">Short Review</th>
                            <th style="border-bottom: 2px solid black;border-top: 1px solid white;">Performance</th>
                            <th style="border-bottom: 2px solid black;border-top: 1px solid white;">Status</th>
                        </tr>
                        <tr t-foreach="o.review_ids" t-as="review" style="font-size: 12px;word-wrap: break-word;line-height: 10px;">
                            <td>
                                <span t-esc="date_conversion(review.review_date)"/>
                            </td>
                            <td>
                                <span t-esc="review.user_id and review.user_id.name or ''"/>
                            </td>
                            <td>
                                <span t-esc="review.short_review"/>
                            </td>
                            <td>
                                <span t-esc="get_performance(review)"/>
                            </td>
                            <td>
                                <span t-if="review.approved_by_hr">
                                    <span class="fa fa-circle" style="color:green;font-size: 16px;" role="img"/>
                                </span>
                                <span t-if="not review.approved_by_hr">
                                    <span class="fa fa-circle" style="color:red;font-size: 16px;" role="img"/>
                                </span>
                            </td>
                        </tr>
                    </table>
                </span>
                <!--signature-->
                <div style="margin-top:35px;">
                    <span class="pull-left" style="font-size: 14px;font-weight:bold;">
                        Employee Signature
                        <br/>
                        <br/>
                        <br/>
                        ...........................
                    </span>
                    <span class="pull-right" style="font-size: 14px;font-weight:bold;">
                        HR Signature
                        <br/>
                        <br/>
                        <br/>
                        ...........................
                    </span>
                </div>
            </div>
        </t>
    </template>

    <template id="probation_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="dev_employee_probation.main_probation_template"/>
            </t>
        </t>
    </template>
</odoo>