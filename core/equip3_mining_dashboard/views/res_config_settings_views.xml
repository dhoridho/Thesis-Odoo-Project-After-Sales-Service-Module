<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_weather" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.weather</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='equip3_mining_accessright_settings']" position="inside">
                <h2>Mining Dashboard</h2>
                <div class="row mt16 o_settings_container" name="open_weather_site">
                    <div class="col-12 col-lg-6 o_setting_box" id="open_weather_site_fields">
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="oweather_site_theme_id" class="col-lg-3 o_light_label" string="Theme"/>
                                    <field name="oweather_site_theme_id" options="{'no_create': 1, 'no_create_edit': 1}"/>
                                </div>
                                <div class="row mt16">
                                    <label for="oweather_site_widget_id" class="col-lg-3 o_light_label" string="Widget"/>
                                    <field name="oweather_site_widget_id" options="{'no_create': 1, 'no_create_edit': 1}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
