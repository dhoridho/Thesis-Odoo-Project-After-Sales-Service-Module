<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mining_site_control_form" model="ir.ui.view">
        <field name="model">mining.site.control</field>
        <field name="inherit_id" ref="equip3_mining_operations.mining_site_control_form"/>
        <field name="arch" type="xml">
        <xpath expr="//notebook" position="inside">
            <page string="Geolocation" name="geolocation">
                <group>
                    <group>
                        <field name="longitude"/>
                        <field name="latitude"/>
                    </group>
                </group>
            </page>
        </xpath>
        </field>
    </record>

    <record id="kanban_view_mining_site_control" model="ir.ui.view">
        <field name="name">Mining Site Control Kanban</field>
        <field name="model">mining.site.control</field>
        <field name="arch" type="xml">
            <kanban class="o_res_partner_kanban" js_class="mining_site_kanban">
                <field name="site_code"/>
                <field name="mining_site"/>
                <field name="ppic"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top mb16">
                                <strong><field name="site_code"/></strong>
                            </div>
                            <div class="o_kanban_record_top mb16">
                                <strong><field name="mining_site"/></strong>
                            </div>
                            
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left text-muted">
                                    <field name="ppic"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="state"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_kanban_mining_site_control" model="ir.actions.act_window">
        <field name="name">Mining Site Dashboard</field>
        <field name="res_model">mining.site.control</field>
        <field name="view_mode">kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Mining Site Dashboard.
            </p>
        </field>
    </record>

    <menuitem id="menu_mining_site_control"
        name="Mining Site Dashboard"
        parent="equip3_mining_accessright_settings.mining_menu_root"
        action="action_kanban_mining_site_control"
        sequence="11"/>

</odoo>
