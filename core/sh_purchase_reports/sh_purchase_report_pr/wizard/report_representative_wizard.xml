<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_purchase_report_representative_wizard_form_view" model="ir.ui.view">
        <field name="name">sh.purchase.report.representative.wizard.wizard.form.view</field>
        <field name="model">sh.purchase.report.representative.wizard</field>
        <field name="arch" type="xml">
            <form string="Purchase Report By Purchase Representative">
                <group>
                    <group>
                        <field name="date_start" />
                        <field name="date_end" />
                    </group>
                    <group>
                        <field name="state" />
                        <field name="company_ids" widget="many2many_tags" options="{'no_create': True}" groups="base.group_multi_company" />
                    </group>
                </group>
                <group>
                    <field name="user_ids" colspan="4" nolabel="1" groups="purchase.group_purchase_manager">
                        <tree>
                            <field name="name" />
                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="print_report" string="Print" class="oe_highlight" type="object" />
                    <button name="print_xls_report" string="Print In XLS" class="oe_highlight" type="object" />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="sh_purchase_report_representative_action" model="ir.actions.act_window">
        <field name="name">Purchase Report By Purchase Representative</field>
        <field name="res_model">sh.purchase.report.representative.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="sh_purchase_report_representative_menuitem" action="sh_purchase_report_representative_action" parent="purchase.purchase_report" sequence="4" />
</odoo>
