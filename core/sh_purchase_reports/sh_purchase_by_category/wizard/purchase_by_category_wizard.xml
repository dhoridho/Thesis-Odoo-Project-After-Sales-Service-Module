<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="sh_po_by_category_wizard" model="ir.ui.view">
		<field name="name">sh.purchase.category.wizard</field>
		<field name="model">sh.purchase.category.wizard</field>
		<field name="arch" type="xml">
			<form string="Purchase By Product Category">
				<group>
					<group>
						<field name="sh_start_date"/>
						<field name="sh_category_ids" widget="many2many_tags"/>
						<field name="company_ids" widget="many2many_tags" options="{'no_create': True}" groups="base.group_multi_company" />
					</group>
					<group>
						<field name="sh_end_date"/>
					</group>
				</group>
				<footer>
                    <button name="print_report" string="Print" class="oe_highlight" type="object" icon="fa-print" />
                    or
                    <button name="print_xls_report" string="Print In XLS" class="oe_highlight" type="object" icon="fa-file-excel-o" />
                    or
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
			</form>
		</field>
	</record>
	<record id="action_po_by_category" model="ir.actions.act_window">
		<field name="name">Purchase By Product Category</field>
		<field name="res_model">sh.purchase.category.wizard</field>
		<field name="view_id" ref="sh_po_by_category_wizard"/>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>
	<menuitem id="sh_po_by_category_report" action="action_po_by_category" parent="purchase.purchase_report" sequence="102" />
</odoo>