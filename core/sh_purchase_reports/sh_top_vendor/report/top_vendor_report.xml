<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sh_tv_top_vendors_doc">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2 class="text-center">Top Vendors</h2>
                    <br />
                    <br />
                    <t t-if="type == 'basic'">
                        <strong>From Date :</strong>
                        <span t-esc="date_from" t-options="{'widget': 'datetime'}" />
                        <br />
                        <strong>To Date :</strong>
                        <span t-esc="date_to" t-options="{'widget': 'datetime'}" />
                        <br />
                        <br />
                        <div class="row">
                            <div class="col-12">
                                <table class="table table-bordered">
                                    <thead class="text-center bg-Primary">
                                        <tr class="bg-Primary">
                                            <th>
                                                <strong>#</strong>
                                            </th>
                                            <th>
                                                <strong>Vendor</strong>
                                            </th>
                                            <th>
                                                <strong>Purchase Amount</strong>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="len(partners)" t-as="i">
                                            <tr>
                                                <td>
                                                    <span t-esc="i + 1" />
                                                </td>

                                                <td>
                                                    <span t-esc="partners[i]" />
                                                </td>

                                                <td>
                                                    <span t-esc="partners_amount[i]" t-options='{"widget": "monetary", "display_currency": currency}' />
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </t>
                    <t t-if="type == 'compare'">
                        <div class="row">
                            <div class="col-6">
                                <strong>From Date :</strong>
                                <span t-esc="date_from" t-options="{'widget': 'datetime'}" />
                                <br />
                                <strong>To Date :</strong>
                                <span t-esc="date_to" t-options="{'widget': 'datetime'}" />
                                <br />
                            </div>
                            <div class="col-6">
                                <strong>Compare From Date :</strong>
                                <span t-esc="date_compare_from" t-options="{'widget': 'datetime'}" />
                                <br />
                                <strong>Compare To Date :</strong>
                                <span t-esc="date_compare_to" t-options="{'widget': 'datetime'}" />
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-6">
                                <table class="table table-bordered">
                                    <thead class="text-center bg-Primary">
                                        <tr class="bg-Primary">
                                            <th>
                                                <strong>#</strong>
                                            </th>
                                            <th>
                                                <strong>Vendor</strong>
                                            </th>
                                            <th>
                                                <strong>Purchase Amount</strong>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="len(partners)" t-as="i">
                                            <tr>
                                                <td>
                                                    <span t-esc="i + 1" />
                                                </td>

                                                <td>
                                                    <span t-esc="partners[i]" />
                                                </td>

                                                <td>
                                                    <span t-esc="partners_amount[i]" t-options='{"widget": "monetary", "display_currency": currency}' />
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-6">
                                <table class="table table-bordered">
                                    <thead class="text-center bg-Primary">
                                        <tr class="bg-Primary">
                                            <th>
                                                <strong>#</strong>
                                            </th>
                                            <th>
                                                <strong>Compare Vendor</strong>
                                            </th>
                                            <th>
                                                <strong>Purchase Amount</strong>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="len(compare_partners)" t-as="i">
                                            <tr>
                                                <td>
                                                    <span t-esc="i + 1" />
                                                </td>

                                                <td>
                                                    <span t-esc="compare_partners[i]" />
                                                </td>

                                                <td>
                                                    <span t-esc="compare_partners_amount[i]" t-options='{"widget": "monetary", "display_currency": currency}' />
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <br />
                        <br />
                        <div class="row">
                            <div class="col-6">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr class="text-center bg-Primary">
                                            <th>New Vendors</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="new_partners" t-as="np">
                                            <tr>
                                                <td>
                                                    <span t-esc="np" />
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-6">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr class="text-center bg-Primary">
                                            <th>Lost Vendors</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="lost_partners" t-as="lp">
                                            <tr>
                                                <td>
                                                    <span t-esc="lp" />
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </t>
                </div>
            </t>
        </t>
    </template>

    <record id="sh_tv_top_vendors_report_action" model="ir.actions.report">
        <field name="name">Top Vendors</field>
        <field name="model">report.sh_purchase_reports.sh_tv_top_vendors_doc</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sh_purchase_reports.sh_tv_top_vendors_doc</field>
        <field name="print_report_name">'Top Vendors'</field>
    </record>
</odoo>
