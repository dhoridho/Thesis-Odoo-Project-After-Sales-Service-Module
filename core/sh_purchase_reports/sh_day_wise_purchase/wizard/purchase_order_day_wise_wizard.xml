<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="sh_purchase_order_wizard_view" model="ir.ui.view">
        <field name="name">purchase.order.report</field>
        <field name="model">purchase.order.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="start_date" />
                            <field name="company_ids" options="{'no_create': True}" widget="many2many_tags" groups="base.group_multi_company" />
                        </group>
                        <group>
                            <field name="end_date" />
                        </group>
                    </group>
                    <footer>
                        <button string="Report" name="generate_report_data" type="object" default_focus="1" class="btn-primary" />
                        <button name="print_purchase_order_day_wise" string="Print Xls" type="object" class="oe_highlight" />
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_purchase_order_day_wise" model="ir.actions.act_window">
        <field name="name">Day Wise Purchase Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.order.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="purchase_order_day_wise_report" name="Day Wise Purchase Report" parent="purchase.purchase_report" action="action_purchase_order_day_wise" groups="purchase.group_purchase_manager" sequence="100" />
</odoo>
