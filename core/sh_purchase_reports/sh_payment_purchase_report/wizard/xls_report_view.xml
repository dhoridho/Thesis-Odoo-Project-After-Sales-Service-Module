<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="bill_payment_report_xls_view" model="ir.ui.view">
        <field name="name">bill.payment.report.xls.view</field>
        <field name="model">bill.payment.report.xls</field>
        <field name="arch" type="xml">
            <form string="Bill Payment Report">
                <group>
                    <field name="excel_file" invisible="True" />
                    <field name="file_name" filename="excel_file" invisible="True" />
                    <button name="download_report" string="Bill Payment Report" type="object" class="oe_highlight" />
                </group>
                <footer>
                    <button string="Close" class="oe_highlight" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="action_bill_payment_report" model="ir.actions.act_window">
        <field name="name">Bill Payment Report Excel</field>
        <field name="view_id" ref="bill_payment_report_xls_view" />
        <field name="view_mode">form</field>
        <field name="res_model">bill.payment.report.xls</field>
        <field name="target">new</field>
    </record>
</odoo>
