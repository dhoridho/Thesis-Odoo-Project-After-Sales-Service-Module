<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="sh_po_bill_summary_report_wizard" model="ir.ui.view">
		<field name="name">sh.purchase.bill.summary.wizard</field>
		<field name="model">sh.purchase.bill.summary.wizard</field>
		<field name="arch" type="xml">
			<form string="Purchase Bill Summary">
				<group>
					<group>
						<field name="sh_start_date"/>
						<field name="sh_partner_ids" widget="many2many_tags"/>
						<field name="company_ids" widget="many2many_tags" options="{'no_create': True}" groups="base.group_multi_company" />
					</group>
					<group>
						<field name="sh_end_date"/>
						<field name="sh_status" widget="radio"/>
					</group>
				</group>
				<footer>
                    <button name="print_report" string="Print" class="oe_highlight" type="object" icon="fa-print" />
                    or
                    <button name="print_xls_report" string="Print In XLS" class="oe_highlight" type="object" icon="fa-file-excel-o" />
                    or
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
			</form>
		</field>
	</record>
	<record id="action_po_bill_summary" model="ir.actions.act_window">
		<field name="name">Purchase Bill Summary</field>
		<field name="res_model">sh.purchase.bill.summary.wizard</field>
		<field name="view_id" ref="sh_po_bill_summary_report_wizard"/>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>
	<menuitem id="sh_po_bill_summary_report" action="action_po_bill_summary" parent="purchase.purchase_report" sequence="104" />
</odoo>