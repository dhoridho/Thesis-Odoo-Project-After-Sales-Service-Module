<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_purchase_details_report_wizard_form" model="ir.ui.view">
        <field name="name">sh.purchase.details.report.wizard.form</field>
        <field name="model">sh.purchase.details.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Purchase Details">
                <group>
                    <group>
                        <field name="start_date" />
                        <field name="state" />
                        <field name="company_ids" options="{'no_create': True}" widget="many2many_tags" groups="base.group_multi_company" />
                    </group>
                    <group>
                        <field name="end_date" />
                    </group>
                </group>
                <footer>
                    <button name="print_report" string="Print" type="object" class="btn-primary" />
                    <button name="print_purchase_detail_xls_report" string="Print Xls" type="object" class="oe_highlight" />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="sh_purchase_details_report_action" model="ir.actions.act_window">
        <field name="name">Purchase Details Report</field>
        <field name="res_model">sh.purchase.details.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="sh_purchase_details_report_menuitem" action="sh_purchase_details_report_action" parent="purchase.purchase_report" groups="purchase.group_purchase_manager" sequence="99" />
</odoo>
