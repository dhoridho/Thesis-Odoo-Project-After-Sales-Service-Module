<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_top_purchasing_product_model_tree" model="ir.ui.view">
        <field name="name">sh.tsp.top.purchasing.product.model.tree</field>
        <field name="model">sh.tsp.top.purchasing.product</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_id" />
                <field name="qty" />
            </tree>
        </field>
    </record>

    <record id="sh_tsp_top_purchasing_product_model_tree_action" model="ir.actions.act_window">
        <field name="name">Top Purchasing Products</field>
        <field name="res_model">sh.tsp.top.purchasing.product</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="sh_top_purchasing_product_model_tree" />
    </record>

    <menuitem id="sh_tsp_top_purchasing_products_main" action="sh_tsp_top_purchasing_product_model_tree_action" parent="purchase.purchase_report" sequence="5" />
    <menuitem id="sh_tsp_view_top_purchasing_products" name="Top Purchasing Products" parent="sh_tsp_top_purchasing_products_main" action="sh_tsp_top_purchasing_product_model_tree_action" />
    <menuitem id="sh_tsp_update_top_purchasing_products" name="Update Top Purchasing Products" parent="sh_tsp_top_purchasing_products_main" action="sh_tsp_top_purchasing_product_wizard_action" />
</odoo>
