<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="top_purchasing_xls_report_view" model="ir.ui.view">
        <field name="name">Top purchasing Products Xlsx</field>
        <field name="model">sh.top.purchasing.excel.extended</field>
        <field name="arch" type="xml">
            <form string="Xls Report">
                <group>
                    <field name="excel_file" invisible="1" />
                    <field name="file_name" readonly="1" filename="excel_file" invisible="1" />
                    <button name="download_report" string="Top Purchasing Products Xlsx" type="object" class="oe_highlight" />
                </group>
                <footer>
                    <button string="Close" class="oe_highlight" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_top_purchasing_excel_form" model="ir.actions.act_window">
        <field name="name">Top Purchasing Products Xlsx</field>
        <field name="view_id" ref="top_purchasing_xls_report_view" />
        <field name="view_mode">form</field>
        <field name="res_model">sh.top.purchasing.excel.extended</field>
        <field name="target">new</field>
    </record>
</odoo>
