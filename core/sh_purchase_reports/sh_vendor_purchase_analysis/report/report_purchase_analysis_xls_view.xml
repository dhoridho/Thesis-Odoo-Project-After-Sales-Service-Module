<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_vendor_purchase_analysis_xls_view" model="ir.ui.view">
        <field name="name">sh.purchase.analysis.xls</field>
        <field name="model">sh.purchase.analysis.xls</field>
        <field name="arch" type="xml">
            <form string="Vendor Purchase Analysis">
                <group>
                    <field name="excel_file" invisible="True" />
                    <field name="file_name" filename="excel_file" invisible="True" />
                    <button name="download_report" string="Vendor Purchase Analysis" type="object" class="oe_highlight" />
                </group>
                <footer>
                    <button string="Close" class="oe_highlight" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="action_vend_purchase_analysis_xls" model="ir.actions.act_window">
        <field name="name">Vendor Purchase Analysis</field>
        <field name="view_id" ref="sh_vendor_purchase_analysis_xls_view" />
        <field name="view_mode">form</field>
        <field name="res_model">sh.purchase.analysis.xls</field>
        <field name="target">new</field>
    </record>
</odoo>
