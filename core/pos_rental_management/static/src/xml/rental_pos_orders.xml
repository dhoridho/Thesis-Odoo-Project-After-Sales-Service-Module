<templates id="template" xml:space="preserve">

    <t t-name="POsRentalOrdersButton" owl="1">
        <span class="control-button" id="pos_rental_orders">
            Rented Product Lists
        </span>
    </t>

    <t t-name="RentalOrdersScreenWidget" owl="1">
        <div class="clientlist-screen screen">
            <div class="orders-screen-content">
                <section class="top-content">
                    <span class='button back' t-on-click="clickBack">
                        <i class='fa fa-angle-double-left'></i>
                        Back
                    </span>
                    <span class="searchbox">
                        <input style="margin: 15px;" placeholder="Search Orders" t-on-keyup="keyup_rented_search" class="order_search"/>
                        <span class="search-clear"></span>
                    </span>
                </section>
                <section class="full-content">
                    <div class='window'>
                        <section class='subwindow collapsed'>
                            <div class='subwindow-container collapsed'>
                                <div class='subwindow-container-fix order-details-contents'>
                                </div>
                            </div>
                        </section>
                        <section class='subwindow'>
                            <div class='wk_table_back subwindow-container'>
                                <div class='subwindow-container-fix touch-scrollable scrollable-y' style="background-color: rgb(240, 238, 238);overflow-y: scroll;">
                                    <table class='client-list wk_order_list'>
                                        <thead>
                                            <tr style="background-color: rgb(135, 160, 166);color: white;">
                                                <th>Product Name</th>
                                                <th>Order Ref</th>
                                                <th>Customer</th>
                                                <th>Order Date</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody class='wk-order-list-contents rental-data-body'>
                                            <t t-foreach="rentalOrder" t-as="order">
                                                <t t-debug="pdb"/>
                                                <t t-if="order_value.state == 'rented'">

                                                    <tr class='rental-order-line' t-att-data-id='order_value.id' style="cursor:pointer;" t-on-click="_onRentalLineClick">
                                                        <td t-att-product-id="order_value.product_id[0]">
                                                            <t t-esc='order_value.product_id[1]' />
                                                        </td>
                                                        <td t-att-order-id="order_value.order_id[0]">
                                                            <t t-esc='order_value.order_id[1]' />
                                                        </td>
                                                        <td>
                                                            <t t-if="order_value.partner_id">
                                                                <t t-esc='order_value.partner_id[1]'/>
                                                            </t>
                                                            <t t-else="">
                                                                <span>-</span>
                                                            </t>
                                                        </td>
                                                        <td>
                                                            <t t-esc='order_value.date_order'/>
                                                        </td>
                                                        <td>
                                                            <t t-if="order_value.state == 'rented'">
                                                                <span>Rented</span>
                                                            </t>
                                                            <t t-elif="order_value.state == 'free'">
                                                                <span>Free</span>
                                                            </t>
                                                            <t t-else="">
                                                                <span>Canceled</span>
                                                            </t>

                                                        </td>
                                                    </tr>
                                                </t>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </section>
                    </div>
                </section>
            </div>
        </div>
    </t>



    <t t-name="OrderDetails">
        <section class='order-details rented_product_details' style="border-bottom: solid 5px rgb(110,200,155);">
            <div class='client-details-box clearfix' style="background-color: rgb(252, 252, 252);">
                <div class='client-details-left' style="margin-bottom: 1%;">
                    <div class='client-detail'>
                        <h2 style="margin-left: 5.6%;color: rgb(67, 134, 111);">Rented Product Details</h2>
                    </div>
                    <div class='client-detail'>
                        <span class='label' style="text-align: left;">Name:</span>
                        <span class='detail client-address'>
                            <t t-esc='order.product_id[1]' />
                        </span>
                    </div>
                    <t t-if="order.partner_id">
                        <div class='client-detail'>
                            <span class='label'>Customer:</span>
                            <span class='detail client-address'>
                                <t t-esc='order.partner_id[1]' />
                            </span>
                        </div>
                    </t>
                    <t t-if="!order.partner_id">
                        <div class='client-detail'>
                            <span class='label'>Customer:</span>
                            <span class='detail client-address'>
                                -
                            </span>
                        </div>
                    </t>
                    <div class='client-detail'>
                        <span class='label' style="text-align: left;">Security Amount:</span>
                        <span class='detail client-address'>
                            <t t-esc='widget.env.pos.format_currency(order.security_price)' />
                        </span>
                    </div>
                    <div class='client-detail'>
                        <span class='label' style="text-align: left;">Price Unit:</span>
                        <span class='detail client-address'>
                            <t t-esc='widget.env.pos.format_currency(order.price_unit)' />
                        </span>
                    </div>
                </div>
                <div class='client-details-right'>
                    <t t-if="order.state == 'rented'">
                        <div class='client-detail'>
                            <div id="wk_refund" t-att-data-id="order.id" class='control-button highlight' style="margin-left: 18%;margin-top: 1%;">
                                Return/Refund
                            </div>
                        </div>
                    </t>
                    <img id="close_order_details" src="/pos_rental_management/static/description/images/icon-cross.png" style="cursor: pointer;position: absolute;left: 96%;top: 3%;"/>
                    <div t-att-class="(order.state  == 'free' ? 'client-detail add_margin' : 'client-detail')">
                        <span class='label' style="text-align: left;">Order Date:</span>
                        <span class='detail client-id'>
                            <t t-esc='order.date_order'/>
                        </span>
                    </div>
                    <div class='client-detail'>
                        <span class='label' style="text-align: left;width: 27%;">Status:</span>
                        <span class='detail client-id'>
                            <t t-if="order.state == 'rented'">
                                <span>Rented</span>
                            </t>
                            <t t-elif="order.state == 'free'">
                                <span>Free</span>
                            </t>
                            <t t-else="">
                                <span>Canceled</span>
                            </t>
                        </span>
                    </div>
                    <div class='client-detail'>
                        <span class='label' style="text-align: left;">Selected Tenure:</span>
                        <span class='detail client-address'>
                            <t t-esc='order.selected_tenure_string' />
                        </span>
                    </div>
                    <div class='client-detail'>
                        <span class='label' title="Including Tax" style="text-align: left;">Subtotal:</span>
                        <span class='detail client-address'>
                            <t t-esc='widget.env.pos.format_currency(order.price_subtotal_incl)' />
                        </span>
                    </div>
                </div>
                <br/>
            </div>
        </section>
    </t>

    <!-- inherit Cline list Screen -->

    <t t-name="ClientListScreen" t-inherit="point_of_sale.ClientListScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//table[hasclass('client-list')]//thead//tr//th[5]" position="after">
            <th>Rented Products</th>
        </xpath>
    </t>

    <t t-name="ClientLine" t-inherit="point_of_sale.ClientLine" t-inherit-mode="extension" owl="1">
        <xpath expr="//td[5]" position="after">
            <td>
                <button class="view_rental_pos_order" t-on-click="click_rental_pos_orders" t-att-id='props.partner.id'>
                    <i class="fa fa-filter"></i> View Rental products</button>
            </td>
        </xpath>
    </t>

    <!-- Return Popup -->

    <t t-name="RentalReturnPopup" owl="1">
        <div class="modal-dialog">
            <div class="popup popup-textinput return_popup_style">
                <div class="title">
                    <t t-debug="pdb"/>
                    <span>
                        Return Rented Products ( In <t t-esc="currencySymbol"/>
 )
                    </span>
                </div>
                <div class="body" style="margin: 5px;">
                    <div class='container_div'>
                        <table border="1" frame="void" rules="rows" class="return_popup_table">
                            <tr class="return_popup_tr">
                                <td class="table_data_cells">
                                    <span>Refund Security Amount:</span>
                                </td>
                                 <t t-if="props.order.security_price">
                                    <td class="table_data_cells refund_security_amount">
                                       <t t-esc="props.order.security_price"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td class="table_data_cells refund_security_amount">
                                        <input type="number" step="0.01" value="0.00"></input>
                                    </td>
                                </t>
                            </tr>
                            <tr class="return_popup_tr">
                                <td class="table_data_cells">
                                    <span>Extra Refund Amount:</span>
                                </td>
                                <td class="table_data_cells refund_extra_amount">
                                    <input type="number" step="0.01" value="0.00"></input>
                                </td>
                            </tr>
                            <tr class="return_popup_tr">
                                <td class="table_data_cells">
                                    <span>Deduction Amount:</span>
                                </td>
                                <td class="table_data_cells deducted_amount">
                                    <input type="number" step="0.01" value="0.00"></input>
                                </td>
                            </tr>
                        </table>
                        <div class="warning-message-return d-none" style="margin-top: 25px;color: #ff0000;">
                            <span class="text-danger">Amounts should be greater than or equal to 0.
                            </span>
                        </div>
                    </div>
                </div>
                <div class="footer">
                    <div class="button" id="return_rented_product" t-on-click="click_return_rented_product" style="background-color: rgb(94, 191, 143);color: white;">
                        Return
                    </div>
                    <div class="button cancel" t-on-click="cancel">
                        Cancel
                    </div>
                </div>
            </div>
        </div>
    </t>


    <t t-name="PaymentScreenStatus" t-inherit="point_of_sale.PaymentScreenStatus" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('total')]" position="replace">
            <t t-if="currentOrder.is_return_order and currentOrder.get_total_with_tax() &lt;=0">
                <div class="total" style="color:#2b8b8e">
                    <t t-esc="totalDueText" />
                </div>
            </t>
            <t t-if="!(currentOrder.is_return_order and currentOrder.get_total_with_tax() &lt;=0)">
                <div class="total">
                    <t t-esc="totalDueText" />
                </div>
            </t>
        </xpath>
    </t>


    <t t-name="ProductScreen" t-inherit="point_of_sale.ProductScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('rightpane')]" position="inside">
            <div id="refund_order_notify" style="color: rgb(0, 0, 0);top: 238px;left:47%;position: absolute;font-size: -webkit-xxx-large;font-size: 30px;text-shadow: -5px 4px 2px #c5c5c5;display:none;">
                THIS IS A RENTED RETURN ORDER
            </div>
            <span id="cancel_refund_order" t-on-click="click_cancel_refund_order" style="cursor: pointer;position: absolute;top: 298px;left:60%;color: white;font-size: xx-large;z-index: 333;text-align: center;height: 38px;border-radius: 5%;font-style: normal;padding: 6px;opacity: 0.7;width: 112px;background-color: rgb(154, 71, 71);display: none;">
                Cancel
            </span>
        </xpath>
    </t>

    <t t-name="PaymentScreen" t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('button') and hasclass('next')]" position="before">
            <span class='button cancel_refund_order' t-on-click="click_delete_return_order" style="cursor: pointer;color:white;width:86px;height:34px;right:0px; margin-right:158px; background:rgb(154, 71, 71)">
                Cancel
            </span>
        </xpath>
    </t>

    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('pos-receipt-contact')]" position="inside">
            <t t-if='receipt.order.is_return_order'>
                <div class="pos-center-align">
                    <span>Return Rented Product</span>
                </div>
            </t>
        </xpath>
        <xpath expr="//div[hasclass('pos-receipt-amount')][1]" position="replace">
            <div class="pos-receipt-amount">
                <t t-if="!receipt.order.is_return_order or receipt.order.get_total_with_tax()>0">
                    TOTAL
                </t>
                <t t-if="receipt.order.is_return_order and receipt.order.get_total_with_tax()&lt;=0">
                    TOTAL REFUND
                </t>
                <t t-if="receipt.order.is_return_order">
                    <span t-esc='env.pos.format_currency_no_symbol(receipt.total_with_tax * -1)' class="pos-receipt-right-align"/>
                </t>
                <t t-if="!receipt.order.is_return_order">
                    <span t-esc='env.pos.format_currency_no_symbol(receipt.total_with_tax)' class="pos-receipt-right-align"/>
                </t>
            </div>
        </xpath>
    </t>



</templates>