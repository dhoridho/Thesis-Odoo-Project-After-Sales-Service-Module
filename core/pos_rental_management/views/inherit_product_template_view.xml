<odoo>
    <data>

        <record id="product_rental_inherited_product_template_form" model="ir.ui.view">
            <field name="name">product.template.rental</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="point_of_sale.product_template_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_title')]//div[@name='options']" position="inside">
                    <div>
                        <field name="available_for_rent"/>
                        <label for="available_for_rent"/>
                    </div>
                </xpath>
                <xpath expr="//page[@name='inventory']" position="after">
                    <page string="Rental" name="rental" attrs="{'invisible': [('available_for_rent', '=', False)]}">
                        <group>
                            <field name="is_security_required" />
                            <field name="rental_security_amount" class="oe_inline" widget='monetary' attrs="{'invisible': [('is_security_required', '=', False)]}" options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                        </group>
                        <group name="Rental">
                            <field name="rental_tenure_ids" context="{'default_product_tmpl_id': id}">
                                <tree>
                                    <field name="name"/>
                                    <field name="tenure_uom_id" options="{'no_create' : True}"/>
                                    <field name="tenure_start_count"/>
                                    <field name="tenure_end_count"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="tenure_amount" widget="monetary"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="name"/>
                                        </group>
                                    </group>
                                    <group>
                                        <group>
                                            <field name="tenure_uom_id" class="oe_inline" options="{'no_create' : True}"/>
                                        </group>
                                        <group>
                                            <label for="tenure_start_count" string="Tenure Range"/>
                                            <div class="o_row">
                                                <field name="tenure_start_count" widget="integer" nolabel="1" class="oe_inline" placeholder="From"/>
                                                <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                                                <field name="tenure_end_count" widget="integer" nolabel="1" class="oe_inline" placeholder="To"/>
                                            </div>
                                        </group>
                                    </group>
                                    <group>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="tenure_amount" widget="monetary" class="oe_inline" options="{'currency_field': 'currency_id', 'field_digits': True}"/>

                                    </group>
                                </form>
                            </field>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
