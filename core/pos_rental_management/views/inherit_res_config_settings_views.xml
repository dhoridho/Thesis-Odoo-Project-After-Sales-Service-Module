<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_res_config_settings_form_view" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="95"/>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='point_of_sale']//h2" position="before">
                    <h2>Rental Security Product</h2>
                    <div class="row mt16 o_settings_container" name="security_product_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="default_security_rental_product" title="This rental security product is use for security amount in the pos order.">
                            <div class="o_setting_right_pane">
                                <div>
                                    <label string="Default Rental Security Product" for="rental_security_product_id"/>
                                    <div class="text-muted">
                                        Default Rental Security Product for Pos Orders
                                    </div>
                                    <div class="content-group mt16">
                                        <field name="rental_security_product_id" colspan="4" nolabel="1"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </xpath>
        </field>
    </record>

</odoo>
