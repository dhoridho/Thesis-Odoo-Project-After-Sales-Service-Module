<odoo>
    <record id="pos_config_inherit_form_view" model="ir.ui.view">
        <field name="name">pos.config.form.view</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@class='row mt16 o_settings_container'][6]" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="partial_payment"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="partial_payment"/>
                        <div class="text-muted">
                            Allow seller to invoice and validate partially paid rental orders.
                            *Rental Order - order that contains atleast one rental product.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
