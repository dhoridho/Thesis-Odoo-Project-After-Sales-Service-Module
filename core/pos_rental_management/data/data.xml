<odoo>
        <record id="wk_rental_product_category_id" model="pos.category">
            <field name="name">Rental</field>
        </record>

        <record id="wk_rental_product_security_category_id" model="pos.category">
            <field name="name">Rental (With Security)</field>
        </record>

        <record id="wk_rental_products_categ" model="product.category">
            <field name="name">Rental Products</field>
        </record>

         <record id="rental_uom_categ_days" model="uom.category">
            <field name="name">Rental Product</field>
        </record>

        <record id="rental_uom_categ_weeks" model="uom.category">
            <field name="name">Rental Product</field>
        </record>

        <record id="rental_uom_categ_months" model="uom.category">
            <field name="name">Rental Product</field>
        </record>
        <record id="rental_uom_categ_years" model="uom.category">
            <field name="name">Rental Product</field>
        </record>

        <record id="rental_uom_days" model="uom.uom">
            <field name="category_id" ref="rental_uom_categ_days"/>
            <field name="name">Day(s)</field>
            <field name="factor" eval="1.0"/>
            <field name="is_rental_uom">1</field>
            <field name="uom_type">reference</field>
        </record>

        <record id="rental_uom_weeks" model="uom.uom">
            <field name="category_id" ref="rental_uom_categ_weeks"/>
            <field name="name">Week(s)</field>
            <field name="factor" eval="1.0"/>
            <field name="is_rental_uom">1</field>
            <field name="uom_type">reference</field>
        </record>

        <record id="rental_uom_months" model="uom.uom">
            <field name="category_id" ref="rental_uom_categ_months"/>
            <field name="name">Month(s)</field>
            <field name="factor" eval="1.0"/>
            <field name="is_rental_uom">1</field>
            <field name="uom_type">reference</field>
        </record>

        <record id="rental_uom_years" model="uom.uom">
            <field name="category_id" ref="rental_uom_categ_years"/>
            <field name="name">Year(s)</field>
            <field name="factor" eval="1.0"/>
            <field name="is_rental_uom">1</field>
            <field name="uom_type">reference</field>
        </record>

        <record id="rental_tenure_1"  model="rental.product.tenure">
            <field name="name">Tenure 1</field>
            <field name="tenure_uom_id"  ref="rental_uom_days"/>
            <field name="tenure_amount">100</field>
            <field name="tenure_start_count">1</field>
            <field name="tenure_end_count">7</field>
        </record>

         <record id="rental_tenure_2"  model="rental.product.tenure">
            <field name="name">Tenure 2</field>
            <field name="tenure_uom_id"  ref="rental_uom_days"/>
            <field name="tenure_amount">200</field>
            <field name="tenure_start_count">1</field>
            <field name="tenure_end_count">7</field>
        </record>

         <record model="pos.config" id="point_of_sale.pos_config_main">
            <field name="start_category">True</field>
            <field name="iface_start_categ_id" ref="wk_rental_product_security_category_id"></field>
        </record>

        <record id="wk_rental_product_template" model="product.template">
            <field name="name">Rental Product</field>
            <field name="standard_price">500.0</field>
            <field name="list_price">750.0</field>
            <field name="pos_categ_id" ref="wk_rental_product_category_id"/> 
            <field name="available_for_rent">True</field>
            <field name="available_in_pos">True</field>
            <field name="rental_tenure_ids" eval="[(6, 0, [ref('rental_tenure_1')])]"/>
        </record>

         <record id="wk_rental_product_template_1" model="product.template">
            <field name="name">Rental Product(With Security)</field>
            <field name="standard_price">400.0</field>
            <field name="list_price">650.0</field>
            <field name="pos_categ_id" ref="wk_rental_product_security_category_id"/> 
            <field name="available_for_rent">True</field>
            <field name="is_security_required">True</field>
            <field name="rental_security_amount">100</field>
            <field name="available_in_pos">True</field>
            <field name="rental_tenure_ids" eval="[(6, 0, [ref('rental_tenure_2')])]"/>
        </record>

        <record id="wk_rental_security_product_id" model="product.product">
            <field name="name">Security</field>
            <field name="list_price">0</field>
            <field name="standard_price">0</field>
            <field name="type">service</field>
            <field name="available_in_pos">True</field>
            <field name="taxes_id" eval="[(6, 0, [])] "/>
            <field name="supplier_taxes_id" eval="[(6, 0, [])] "/>
        </record>

        <record id="default_rental_security_config" model="ir.config_parameter">
            <field name="key">default_rental_security_product_id</field>
            <field name="value" ref="wk_rental_security_product_id"/>
        </record>

        <function model="pos.config" name="set_rental_product_id" />
</odoo>
