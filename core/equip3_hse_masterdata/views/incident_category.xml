<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <!-- tree view -->
        <record id="incident_category_view_tree" model="ir.ui.view">
            <field name="name">incident.category.view.tree</field>
            <field name="model">incident.category</field>
            <field name="arch" type="xml">
                <tree multi_edit="1" sample="1">
                    <field name="name" string="Incident Category" class="font-weight-bold" />
                    <field name="incident_level"/>
                </tree>
            </field>
        </record>

        <!-- form view -->
        <record id="incident_category_view_form" model="ir.ui.view">
            <field name="name">incident.category.view.form</field>
            <field name="model">incident.category</field>
            <field name="arch" type="xml">
                <form string="Incident Category">
                    <sheet>
                        <div class="oe_title pr-0">
                            <h1 class="d-flex flex-row justify-content-between">
                                <field name="name" placeholder="Name" class="o_task_name text-truncate"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="incident_level"/>
                                <field name="company_id"/>
                                <field name="branch_id"/>
                            </group>
                            <group>
                                <field name="create_uid"/>
                                <field name="create_date" string="Creation Date"/>
                            </group>   
                        </group>
                        <group>
                            <field name="note" widget = "html" nolabel = '1'/>
                        </group>
                    </sheet>
                    <!-- <div class="oe_chatter" name="chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div> -->
                </form>
            </field>
        </record>
    
