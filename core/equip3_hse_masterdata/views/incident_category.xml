        <record id="action_view_incident_category_menu_tree" model="ir.actions.act_window">
            <field name="name">Incident Category</field>
            <field name="res_model">incident.category</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Incident Category found. Let's create one!
                </p>
            </field>
        </record>

        <menuitem id="incident_category_menu"
                  name="Incident Category"
                  parent="equip3_hse_masterdata.hse_configuration_menu"
                  action="action_view_incident_category_menu_tree"
                  sequence="1"/>

    </data>
</odoo>
