<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="izi_shopee.form_mp_promotion_program" model="ir.ui.view">
            <field name="name">MP Promotion Program Form View</field>
            <field name="model">mp.promotion.program</field>
            <field name="inherit_id" ref="izi_marketplace.mp_promotion_program_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='mp_promotion_fields']" position="inside">
                    <group string="Shopee Voucher Information" attrs="{'invisible': ['|',('marketplace', '!=', 'shopee'),('code', '!=', 'voucher')]}">
                        <field name="sp_base_voucher_code" readonly="1"/>
                        <field name="sp_voucher_code" attrs="{'required': [('code', '=', 'voucher')]}"/>
                        <field name="sp_voucher_type" attrs="{'required': [('code', '=', 'voucher')]}"/>
                        <field name="sp_reward_type" attrs="{'required': [('code', '=', 'voucher')]}"/>
                        <label for="sp_discount_amount" attrs="{'invisible':[('sp_reward_type', '!=', '1')]}"/>
                        <div class="o_row" name="sp_discount_amount" attrs="{'invisible':[('sp_reward_type', '!=', '1')]}">
                            <span>Rp</span>
                            <field name="sp_discount_amount" attrs="{'required': [('sp_reward_type', '=', '1')]}"/>
                        </div>
                        <label for="sp_discount_percentage" attrs="{'invisible':[('sp_reward_type', 'not in', ['2','3'])]}"/>
                        <div class="o_row" name="sp_discount_percentage" attrs="{'invisible':[('sp_reward_type', 'not in', ['2','3'])]}">
                            <field name="sp_discount_percentage" attrs="{'required': [('sp_reward_type', '=', '2')]}"/>
                            <span>%</span>
                        </div>
                        <field name="sp_set_maximum" attrs="{'invisible':[('sp_reward_type', 'not in', ['2','3'])]}" widget="boolean_toggle"/>
                        <field name="sp_max_price" attrs="{'invisible':[('sp_set_maximum', '!=', True)]}"/>
                        <field name="sp_usage_quantity" attrs="{'required': [('code', '=', 'voucher')]}"/>
                        <field name="sp_min_basket_price" attrs="{'required': [('code', '=', 'voucher')]}"/>
                        <field name="sp_display_channel_list" widget='many2many_tags'/>
                        <field name="sp_voucher_item_list" attrs="{'invisible':[('sp_voucher_type', '!=', '2')]}">
                            <tree editable="top">
                                <field name="promotion_id" invisible="1"/>
                                <field name="mp_account_id" invisible="1" force_save="1"/>
                                <field name="mp_product_id" required="1" domain="[('mp_account_id', '=', mp_account_id),('is_active', '=', True)]" force_save="1"/>
                                <field name="item_original_price"/>
                            </tree>
                        </field>
                    </group>
                    <group string="Shopee Bundle Deal Information" attrs="{'invisible': ['|',('marketplace', '!=', 'shopee'),('code', '!=', 'bundle')]}">
                        <field name="sp_bundle_rule_type" attrs="{'required': [('code', '=', 'bundle'), ('marketplace', '=', 'shopee')]}"/>
                        <field name="sp_bundle_min_amount" attrs="{'required': [('code', '=', 'bundle'), ('marketplace', '=', 'shopee')]}"/>
                        <label for="sp_bundle_fix_price" attrs="{'invisible':[('sp_bundle_rule_type', '!=', '1')]}"/>
                        <div class="o_row" name="sp_bundle_fix_price" attrs="{'invisible':[('sp_bundle_rule_type', '!=', '1')]}">
                            <span>Rp</span>
                            <field name="sp_bundle_fix_price" attrs="{'required': [('sp_bundle_rule_type', '=', '1')]}"/>
                        </div>
                        <label for="sp_bundle_discount_percentage" attrs="{'invisible':[('sp_bundle_rule_type', '!=', '2')]}"/>
                        <div class="o_row" name="sp_bundle_discount_percentage" attrs="{'invisible':[('sp_bundle_rule_type', '!=', '2')]}">
                            <field name="sp_bundle_discount_percentage" attrs="{'required': [('sp_bundle_rule_type', '=', '2')]}"/>
                            <span>%</span>
                        </div>
                        <label for="sp_bundle_discount_value" attrs="{'invisible':[('sp_bundle_rule_type', '!=', '3')]}"/>
                        <div class="o_row" name="sp_bundle_discount_value" attrs="{'invisible':[('sp_bundle_rule_type', '!=', '3')]}">
                            <span>Rp</span>
                            <field name="sp_bundle_discount_value" attrs="{'required': [('sp_bundle_rule_type', '=', '3')]}"/>
                        </div>
                        <field name="sp_bundle_purchase_limit" attrs="{'required': [('code', '=', 'bundle'), ('marketplace', '=', 'shopee')]}"/>
                        <field name="sp_bundle_item_list">
                            <tree editable="top">
                                <field name="promotion_id" invisible="1"/>
                                <field name="mp_account_id" invisible="1" force_save="1"/>
                                <field name="mp_product_id" required="1" domain="[('mp_account_id', '=', mp_account_id),('is_active', '=', True)]" force_save="1"/>
                                <field name="item_original_price"/>
                            </tree>
                        </field>
                    </group>
                    <group string="Shopee Addon Deal Information" attrs="{'invisible': ['|',('marketplace', '!=', 'shopee'),('code', '!=', 'addon')]}">
                        <field name="sp_addon_deal_type" attrs="{'required': [('code', '=', 'addon')]}"/>
                        <field name="sp_addon_purchase_limit" attrs="{'invisible':[('sp_addon_deal_type', '!=', '0')]}"/>
                        <label for="sp_addon_purchase_min_spend" attrs="{'invisible':[('sp_addon_deal_type', '!=', '1')]}"/>
                        <div class="o_row" name="sp_addon_purchase_min_spend" attrs="{'invisible':[('sp_addon_deal_type', '!=', '1')]}">
                            <span>Rp</span>
                            <field name="sp_addon_purchase_min_spend"/>
                            <span>Get</span>
                            <field name="sp_addon_per_gift_num"/>
                            <span>Free Gift</span>
                        </div>
                    </group>
                    <group string='Add Main Product' attrs="{'invisible': ['|',('marketplace', '!=', 'shopee'),('code', '!=', 'addon')]}">
                        <field name="sp_addon_main_item_ids" attrs="{'required': [('code', '=', 'addon')]}">
                            <tree editable="top">
                                <field name="promotion_id" invisible="1"/>
                                <field name="mp_account_id" invisible="1" force_save="1"/>
                                <field name="mp_product_id" required="1" domain="[('mp_account_id', '=', mp_account_id),('is_active', '=', True)]" force_save="1"/>
                                <field name="item_original_price"/>
                            </tree>
                        </field>
                    </group>
                    <group string='Add Sub Product' attrs="{'invisible': ['|',('marketplace', '!=', 'shopee'),('code', '!=', 'addon')]}">
                        <field name="sp_addon_sub_item_ids" attrs="{'required': [('code', '=', 'addon')]}">
                            <tree editable="top">
                                <field name="promotion_id" invisible="1"/>
                                <field name="mp_account_id" invisible="1" force_save="1"/>
                                <field name="mp_product_id" required="1" domain="[('mp_account_id', '=', mp_account_id),('is_active', '=', True)]" force_save="1"/>
                                <field name="mp_product_variant_count" invisible="1"/>
                                <field name="mp_product_variant_id" domain="[('mp_product_id', '=', mp_product_id),('is_active', '=', True)]" attrs="{'required': [('mp_product_variant_count','!=', 0)]}" force_save="1"/>
                                <field name="item_original_price"/>
                                <field name="price_mode"/>
                                <field name="item_price" required="1"/>
                                <field name="final_item_price"/>
                                <field name="purchase_limit"/>
                            </tree>
                        </field>
                    </group>
            </xpath>
        </field>
    </record>
</data>
</odoo>
