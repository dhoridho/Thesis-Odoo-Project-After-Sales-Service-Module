<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="izi_shopee.form_product_template_shopee" model="ir.ui.view">
            <field name="name">Product Template Form View</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="izi_marketplace.form_product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='marketplace']//page[@name='shopee']" position="inside">
                    <group>
                        <group name="shopee_data" string="Shopee Data">
                            <field name="sp_account_ids" widget="many2many_tags" domain="[('marketplace', '=', 'shopee')]" options="{'no_open': True, 'no_create_edit': True, 'no_create': True}"/>
                            <field name="sp_categ_id" options="{'no_open': True, 'no_create_edit': True, 'no_create': True}"/>
                            <field name="sp_brands_id" domain="[('category_id', '=', sp_categ_id)]" options="{'no_open': True, 'no_create_edit': True, 'no_create': True}"/>
                            <field name="sp_condition"/>
                            <field name="sp_sales_price"/>
                            <field name="sp_item_dangerous"/>
                        </group>
                        <group string="Shopee Attribute">
                            <button string="Get Marketplace Attribute" type="object" name="action_get_shopee_attribute" help="Get attribute from marketplace (optional). This action will be reset your attribute datas before."/>
                            <field name="sp_attributes_ids" widget="one2many" nolabel="1">
                                <tree string="Attributes" editable="bottom" create="0" delete="0">
                                    <field name="is_mandatory" invisible="1" force_save="1"/>
                                    <field name="attribute_id" readonly="1" force_save="1"/>
                                    <field name="attribute_value_id" domain="[('attribute_id', '=', attribute_id)]" attrs="{'required': [('is_mandatory', '=', True)]}"/>
                                    <field name="sp_attribute_name" invisible="1" force_save="1"/>
                                    <field name="sp_product_id" invisible="1"/>
                                    <field name="product_tmpl_id" invisible="1"/>
                                    <field name="category_id" invisible="1"/>

                                </tree>
                            </field>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>