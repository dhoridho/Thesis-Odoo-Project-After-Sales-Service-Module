                        <field name="sp_order_id" string="Shopee Order ID"/>
                        <field name="sp_package_number" string="Shopee Package Number"/>
                        <field name="sp_forder_id" string="Shopee Forder ID"/>
                    </group>
                </group>
            </field>
        </record>
    </data>
</odoo>