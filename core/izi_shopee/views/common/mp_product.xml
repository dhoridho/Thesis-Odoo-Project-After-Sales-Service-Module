<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="izi_shopee.form_mp_product" model="ir.ui.view">
            <field name="name">Marketplace Product Form View</field>
            <field name="model">mp.product</field>
            <field name="inherit_id" ref="izi_marketplace.form_mp_product"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='mp_product_fields']" position="inside">
                    <group string="Shopee Data" attrs="{'invisible': [('marketplace', '!=', 'shopee')]}">
                        <field name="sp_item_status"/>
                        <field name="sp_has_variant"/>
                        <field name="sp_category_id" options="{'no_open': True, 'no_create_edit': True, 'no_create': True}"/>
                        <field name="sp_brand_id" domain="[('category_id', '=', sp_category_id)]" />
                    </group>
                    <group string="Shopee Attribute" attrs="{'invisible': [('marketplace', '!=', 'shopee')]}">
                        <field name="sp_attribute_ids" widget="one2many" nolabel="1">
                            <tree string="Attributes" editable="bottom" create="0" delete="0">
                                <field name="attribute_id" readonly="1" force_save="1"/>
                                <field name="attribute_value_id" domain="[('attribute_id', '=', attribute_id)]" options="{'no_open': True, 'no_create_edit': True, 'no_create': True}"/>
                                <field name="sp_product_id" invisible="1"/>
                                <field name="category_id" invisible="1"/>
                            </tree>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>