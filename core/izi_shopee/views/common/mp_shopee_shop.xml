<?xml version="1.0" encoding="UTF-8"?><odoo>
    <data noupdate="0">
        <record id="izi_shopee.form_mp_shopee_shop" model="ir.ui.view">
            <field name="name">Marketplace Shopee Shop Form View</field>
            <field name="model">mp.shopee.shop</field>
            <field name="arch" type="xml">
                <form string="Marketplace Shopee Shop">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <img alt="Shopee" class="mp-account-img" src="/izi_shopee/static/src/img/sp.png"/>
                        </div>
                        <field class="oe_avatar" name="shop_logo" readonly="1" widget="image_url"/>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="shop_name"/>
                            <h1>
                                <field name="shop_name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="shop_id"/>
                                <field name="mp_account_id"/>
                                <field name="shop_description"/>
                                <field name="shop_region"/>
                                <field name="shop_status"/>
                            </group>
                            <group>
                                <field name="is_cb"/>
                                <field name="is_cnsc"/>
                                <field name="auth_time"/>
                                <field name="expire_time"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Active Logistics">
                                <field context="{'default_shop_id': active_id, 'default_mp_account_id': mp_account_id}" mode="tree" name="shop_logistic_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="enabled"/>
                                        <field name="cod_enabled"/>
                                    </tree>
                                    <form string="Marketplace Shopee Shop Logistic">
                                        <sheet>
                                            <!--suppress OdooXml -->
                                            <field invisible="1" name="id"/>
                                            <field invisible="1" name="shop_id"/>
                                            <field invisible="1" name="mp_account_id"/>
                                            <group>
                                                <!--suppress PyUnresolvedReferences -->
                                                <field attrs="{'readonly': [('id', '!=', False)]}" force_save="1" name="logistic_id" options="{'no_create': True}"/>
                                                <field name="enabled"/>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                            <page groups="base.group_no_one" string="Debug">
                                <group>
                                    <field name="mp_external_id"/>
                                    <field name="md5sign"/>
                                    <field name="raw"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
