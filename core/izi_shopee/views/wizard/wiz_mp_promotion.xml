<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="izi_shopee.form_wiz_mp_promotion" model="ir.ui.view">
            <field name="name">Wizard Marketplace Promotion Form View</field>
            <field name="model">wiz.mp.promotion</field>
            <field name="inherit_id" ref="izi_marketplace.form_wiz_mp_promotion"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='mp_fields']" position="inside">
                    <field name="sp_promotion_type" attrs="{'invisible': [('marketplace', '!=', 'shopee')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>