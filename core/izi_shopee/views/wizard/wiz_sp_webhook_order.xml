<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="izi_shopee.form_wiz_sp_webhook_order" model="ir.ui.view">
            <field name="name">Wizard Shopee Webhook Order Form</field>
            <field name="model">wiz.sp_webhook_order</field>
            <field name="arch" type="xml">
                <form string="Wizard SP Webhook Order">
                    <sheet>
                        <group>
                            <field name="range_type"/>
                            <field name="start_time"/>
                            <field name="end_time"/>
                        </group>
                        <footer>
                            <button name="confirm" type="object" string="Confirm" class="btn-primary" confirm="Are you sure to proceed?"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>