<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_mrp_workcenter_form" model="ir.ui.view">
        <field name="name">view.mrp.workcenter.form</field>
        <field name="model">mrp.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_workcenter_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='resource_calendar_id']" position="attributes">
                <attribute name="domain">[('calendar_type', '=', 'mrp')]</attribute>
                <attribute name="context">{'form_view_ref': 'equip3_manuf_resource.view_mrp_resource_calendar_form'}</attribute>
            </xpath>
        </field>
    </record>

</odoo>