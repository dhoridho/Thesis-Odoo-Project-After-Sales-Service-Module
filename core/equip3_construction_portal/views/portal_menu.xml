<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="project.portal_my_home" name="Show Projects / Tasks" customize_show="True"
              inherit_id="portal.portal_my_home" priority="38">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry" groups="base.group_user">
                <t t-set="title">Projects</t>
                <t t-set="url" t-value="'/my/projects'"/>
                <t t-set="placeholder_count" t-value="'project_count'"/>
            </t>
            <t t-call="portal.portal_docs_entry" groups="base.group_user">
                <t t-set="title">Tasks</t>
                <t t-set="url" t-value="'/my/tasks'"/>
                <t t-set="placeholder_count" t-value="'task_count'"/>
            </t>
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Subcon Tender Submission</t>
                <t t-set="url" t-value="'/my/subcon/tender/submission'"/>
                <t t-set="count" t-value="st_submission_count"/>
            </t>
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Subcon purchase Order</t>
                <t t-set="url" t-value="'/my/subcon/purchase/order'"/>
                <t t-set="count" t-value="subcon_po_count"/>
            </t>
        </xpath>
    </template>
    <template id="website_job_workorder_request.custom_wo_portal_job_order" name="custom_wo_portal_joborder: joborder menu entry"
              inherit_id="portal.portal_my_home" priority="5">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry" groups="base.group_user">
                <t t-set="title">Job Order</t>
                <t t-set="url" t-value="'/my/custom_wo_job_orders'"/>
                <t t-set="placeholder_count" t-value="'custom_wo_joborder_count'"/>
            </t>
        </xpath>
    </template>
</odoo>
