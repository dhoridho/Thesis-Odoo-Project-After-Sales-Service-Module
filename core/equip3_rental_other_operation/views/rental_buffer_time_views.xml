<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_rental_buffer_time_tree" model="ir.ui.view">
        <field name="name">rental.buffer.time.tree</field>
        <field name="model">rental.buffer.time</field>
        <field name="arch" type="xml">
             <tree string="Rental Buffer Time" create="false" export_xlsx="false">
                <field name="buffer_start_time"/>
                <field name="buffer_end_time"/>
                <field name="name"/>
                <field name="state"/>
             </tree>
        </field>
    </record>
    <record id="view_rental_buffer_time_form" model="ir.ui.view">
        <field name="name">rental.buffer.time.form</field>
        <field name="model">rental.buffer.time</field>
        <field name="arch" type="xml">
            <form string="Rental Buffer Time" create="false" edit="false" delete="false">
                <sheet string="Rental Buffer Time">
                    <group>
                        <group colspan="4" col="2">
                            <field name="buffer_start_time"/>
                            <field name="buffer_end_time"/>
                        </group>
                        <group colspan="4" col="2">
                            <field name="rental_order_line_id" context="{'form_view_ref': 'equip3_rental_other_operation.rental_order_line_form_view_inherit'}"/>
                        </group>
                        <group colspan="4" col="2">
<!--                            <label for="name" string="Description"/>-->
<!--                            <field name="name" nolabel="1" />-->
                            <field name="serial_no" options="{'no_open': True}" />
                            <field name="product_id" options="{'no_open': True}" />
                            <field name="state" />
                            <field name="branch_id" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="rental_order_line_form_view_inherit" model="ir.ui.view">
    <field name="name">rental.order.line.form</field>
    <field name="model">rental.order.line</field>
    <field name="arch" type="xml">
        <form string="Asset Rental Line" create="false" edit="false" delete="false">
            <sheet string="Rental Details">
                <group colspan="4" cols="2">
                    <field name="lot_id" options="{'no_open': True}" />
                    <field name="product_categ_id" options="{'no_open': True}" />
                    <field name="product_id"
                            options="{'no_open': True}" />
                    <field name="price_unit" />
                    <field name="tax_id" widget="many2many_tags"/>
                    <field name="name" />
                    <div groups="base.group_no_one">
                        <label for="invoice_lines" />
                        <field name="invoice_lines" invisible="1" />
                    </div>
                    <field name="rental_buffer_time_id" options="{'no_open': True}" />
                    <field name="buffer_start_time" readonly="1" />
                    <field name="buffer_end_time" readonly="1" />
                </group>
            </sheet>
        </form>
    </field>
    </record>
    <record id="view_rental_buffer_time_graph" model="ir.ui.view">
        <field name="name">rental.buffer.time.graph</field>
        <field name="model">rental.buffer.time</field>
        <field name="arch" type="xml">
            <graph string="Rental Buffer Time" sample="1">
                <field name="product_id" type="row"/>
                <field name="create_date" type="col" interval="month"/>
            </graph>
        </field>
    </record>
    <record id="view_rental_buffer_time_pivot" model="ir.ui.view">
        <field name="name">rental.buffer.time.pivot</field>
        <field name="model">rental.buffer.time</field>
        <field name="arch" type="xml">
            <pivot string="Rental Buffer Time" sample="1">
                <field name="product_id" type="row"/>
                <field name="create_date" type="col" interval="month"/>
            </pivot>
        </field>
    </record>

    <record id="rental_buffer_time_action" model="ir.actions.act_window">
        <field name="name">Rental Buffer Time</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">rental.buffer.time</field>
        <field name="view_mode">tree,form,graph,pivot</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Rental Buffer Time.
            </p>
        </field>
    </record>

