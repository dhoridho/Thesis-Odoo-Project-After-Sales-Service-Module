<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_normal_form_view_rental_info" model="ir.ui.view">
            <field name="name">product.product.form.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//page[@name='rentalinformation']/group[last()]/group" position="after">
					<group string="Rental Buffer Time">
						<field name="backup_start_time" widget="float_time" class="oe_inline"/>
						<field name="backup_end_time" widget="float_time" class="oe_inline"/>
					</group>
                </xpath>
            </field>
        </record>
        <record id="rental_products_template_form_view_inherit" model="ir.ui.view">
            <field name="name">rental.product.template.form.view.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='rentalinformation']/group[last()]/group" position="after">
					<group string="Rental Buffer Time">
						<field name="backup_start_time" widget="float_time" class="oe_inline"/>
						<field name="backup_end_time" widget="float_time" class="oe_inline"/>
					</group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>