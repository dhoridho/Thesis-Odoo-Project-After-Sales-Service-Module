<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>

        <record id="claim_request_approval_multi_branch_rule" model="ir.rule">
            <field name="name">Claim Request Approval Multi-Branch</field>
            <field name="model_id" ref="model_approval_matrix_claim_request"/>
            <field name="domain_force">[
                '|', 
                    ('branch_id', '=', False), 
                    ('branch_id', 'in', branch_ids)
            ]</field>
        </record>

        <record id="progressive_claim_multi_branch_rule" model="ir.rule">
            <field name="name">Progressive Claim Multi-Branch</field>
            <field name="model_id" ref="model_progressive_claim"/>
            <field name="domain_force">[
                '|', 
                    ('branch_id', '=', False), 
                    ('branch_id', 'in', branch_ids)
            ]</field>
        </record>

    </data>
</odoo>