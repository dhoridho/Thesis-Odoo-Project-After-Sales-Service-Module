            <field name="name">Notification for Invoice</field>
            <field name="email_from">${ctx.get('email_from')}</field>
            <field name="email_to">${ctx.get('email_to')}</field>
            <field name="subject">The Invoice Has Been Created</field>
            <field name="model_id" ref="equip3_construction_accounting_operation.model_progressive_claim"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[
                <p>Date: ${ctx.get('date')}</p>
                <p>Subject : The ${ctx.get('type')} has been created</p>
                <p>Dear ${ctx.get('approver_name')},</p>
                <p>You have 
                %if ctx.get('type') == 'invoice':
                    an invoice
                %else:
                    a bill
                %endif
                generated automatically for this month.</p>
                <p>This is a ${ctx.get('invoice_for')} ${ctx.get('type')}. You can review it by clicking this button:</p>
                <div style = "margin: 16px;">
                    <a href=${ctx.get('url')} style = "padding: 5px 10px; font-size: 12px; line-height: 18px;
                    color: #FFFFFF; border-color:#875A7B; text-decoration: none; display: inline-block; 
                    margin-bottom: 0px; font-weight: 400; text-align: center; vertical-align: middle; 
                    cursor: pointer; white-space: nowrap; background-image: none; background-color: #875A7B;
                    border: 1px solid #875A7B; border-radius:3px">View Invoice</a></div>
                <p>Thank you,</p>
                <p>This is an automatically generated email, please do not reply.</p>
                ]]></field>
        </record>

