<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record model="ir.cron" id="progressive_claim_invoice_creation">
            <field name="name">Progressive Claim Invoice</field>
            <field name="model_id" ref="model_progressive_claim"/>
            <field name="state">code</field>
            <field name="code">model._automatic_create_invoice()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="datetime.now().replace(minute=0, hour=0, second=0) + timedelta(days=1)"/>
            <field name="active" eval="True"/>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>
    </data>
</odoo>