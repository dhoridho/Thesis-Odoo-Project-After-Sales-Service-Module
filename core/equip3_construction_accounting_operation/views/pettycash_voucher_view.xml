<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="account_petty_cash_voucher_form_inherit" model="ir.ui.view">
            <field name="name">account.pettycash.voucher.wizard.form</field>
            <field name="model">account.pettycash.voucher.wizard</field>
            <field name="priority" eval="100"/>
            <field name="inherit_id" ref="equip3_accounting_pettycash.account_petty_cash_voucher_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/group[1]/field[@name='fund']" position="before">
                    <field name="project_id"/>
                    <field name="cost_sheet" readonly="1"
                    attrs="{'invisible': [('project_id', '=', False)], 'required': [('project_id', '!=', False)]}"/>
                    <field name="project_budget" readonly="1"
                    attrs="{'invisible': [('project_id', '=', False)]}"/>
                </xpath>
                <xpath expr="//form/sheet/group/group[1]/field[@name='fund']" position="attributes">
                    <attribute name="domain">[('project', '=', project_id), ('cost_sheet', '=', cost_sheet), ('project_budget', '=', project_budget)]</attribute>
                </xpath>
            </field>
        </record>
    </data>        
</odoo> 