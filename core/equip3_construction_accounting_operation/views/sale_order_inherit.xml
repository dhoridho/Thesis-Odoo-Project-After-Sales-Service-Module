<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_const_view_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.const.view.form.inherit</field>
            <field name="model">sale.order.const</field>
            <field name="inherit_id" ref="equip3_construction_sales_operation.sale_order_const_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[@name='action_set_quotation']" position="after">
                    <button name="create_renew_contract" type="object" string="Create Re-New Contract" attrs="{'invisible': ['|', '|', '|', ('state', '!=', 'cancel'), ('is_renewed', '=', True), ('contract_cancel_bool', '=', False), ('boq_revised_bool', '=', True)]}"/>
                </xpath>

                <xpath expr="//header/button[@id='action_set_quotation_1']" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', '|', ('state', 'not in', ('reject', 'over_limit_reject','cancel')), ('contract_cancel_bool', '=', True), ('boq_revised_bool', '=', True)]}</attribute>    
                </xpath>

                <xpath expr="//header/button[@name='action_confirm_approving_matrix']" position="after">
                    <button name="create_progressive_claim" type="object" class="btn-primary" string="Create Progressive Claim" attrs="{'invisible': ['|', ('count_claim', '>', 0), ('state', '!=', 'sale')]}"/>
                </xpath>

                <xpath expr="//sheet/div[@name='button_box']/button[@name='action_cost_sheet']" position="after">
                    <button type="object" class="oe_stat_button" icon="o-hm-smart-construction-claim"
                            name="action_progressive_claim" attrs="{'invisible' : [('state', 'not in', ('sale', 'done'))]}">
                        <div class="o_form_field o_stat_info">
                            <span class="o_stat_text">Claim</span>
                        </div>
                    </button> 
                </xpath>

                <xpath expr="//notebook/page[@name='project_details']/group/group[@name='pd_left']/field[@name='contract_parent']" position="after">
                    <field name="claim_id" options="{'no_create': True, 'no_quick_create':True,'no_create_edit':True}" force_save="1" readonly="1" invisible="1"/>
                    <field name="count_claim" invisible="1"/>
                </xpath>

                <xpath expr="//field[@name='contract_template']" position="after">
                    <field name="responsible" attrs="{'invisible': [('state', '!=', 'cancel')]}" readonly="1" force_save="1"/>
                    <field name="reason" attrs="{'invisible': [('state', '!=', 'cancel')]}" readonly="1" force_save="1"/>
                </xpath>

                <xpath expr="//group[@name='main_form']/group[@name='left_section_main']/field[@name='job_references']" position="before">
                    <field name="contract_cancel_bool" invisible="1"/>
                    <field name="is_renewed" invisible="1"/>
                    <field name="new_contract" attrs="{'invisible': [('is_renewed', '=', False)]}" readonly="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>