<odoo>
    <data>
        
        <record id="add_fields_project_task_form_inherit_22" model="ir.ui.view">
            <field name="name">add.fields.project.task.form.inherit.22</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="equip3_construction_operation.add_fields_project_task_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group/group[2]/field[@name='project_director']" position="before">
                    <field name="claim_id_so" invisible="1"/>
                    <field name="claim_id_po" invisible="1"/>
                </xpath>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_claim_so_cons" type="object" class="oe_stat_button" icon="o-hm-smart-construction-claim"
                            attrs="{'invisible' : [('claim_id_so', '=', False)]}">
                        <div class="o_form_field o_stat_info">
                            <span class="o_stat_text">Claim<br/>Customer</span>
                        </div>
                    </button>
                    <button name="action_claim_po_cons" type="object" class="oe_stat_button" icon="o-hm-smart-construction-claim"
                            attrs="{'invisible' : [('claim_id_po', '=', False)]}">
                        <div class="o_form_field o_stat_info">
                            <span class="o_stat_text">Claim<br/>Subcon</span>
                        </div>
                    </button>
                     <button name="action_view_labour_bills"
                        type="object"
                        class="oe_stat_button"
                        icon="o-hm-smart-construction-product-usage">
                        <field name="labour_bill_count" string="Labour Bills" widget="statinfo"/>
                     </button>
                </xpath>
                <xpath expr="//notebook/page[@name='extra_info']/group/group[2]/field[@name='date_last_stage_update']"
                       position="after">
                    <field name="wo_prog_temp" readonly="1" force_save="1" invisible="1"/>
                </xpath>
                <xpath expr="//sheet/group/group[2]/field[@name='purchase_subcon']" position="attributes">
                    <attribute name="domain">[('project','=',project_id), ('is_subcontracting','=',True), ('addendum_payment_method','=','split_payment'), ('state','=','purchase')]</attribute>
                </xpath>
                <xpath expr="//notebook/page[@name='extra_info']/group/group[2]/field[@name='last_progress']"
                       position="after">
                    <field name="last_progress_subcon" widget="progressbar" attrs="{'invisible':[('is_subcon','=', False)]}"/>
                </xpath>
            </field>
        </record>
    
    </data>  
</odoo>  