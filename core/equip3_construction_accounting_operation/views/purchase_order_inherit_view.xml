<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="direct_purchase_form_view_equip3_purchase_other_operation_const_rfq_123" model="ir.ui.view">
            <field name="name">direct.purchase.form.view.equip3.purchase.other.operation.const.rfq.123</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="equip3_construction_purchase_operation.direct_purchase_form_view_equip3_purchase_other_operation_const_rfq_2"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[@name='purchase_whatsapp']" position="before">
                    <!-- <button name="create_renew_contract" type="object" string="Create Re-New Contract" attrs="{'invisible': ['|', ('state', '!=', 'cancel'), ('is_renewed', '=', True)]}"/> -->
                    <button name="create_progressive_claim" type="object" class="btn-primary" string="Create Progressive Claim" attrs="{'invisible': ['|', '|', ('count_claim', '>', 0), ('is_subcontracting','=',False), ('state', '!=', 'purchase')]}"/>
                </xpath>

                <xpath expr="//sheet/div[@name='button_box']/button[1]" position="before">
                    <button type="object" class="oe_stat_button" icon="o-hm-smart-construction-claim"
                            name="action_progressive_claim" attrs="{'invisible' : [('count_claim', '=', 0)]}">
                        <div class="o_form_field o_stat_info">
                            <span class="o_stat_text">Claim</span>
                        </div>
                    </button> 
                </xpath>

                <xpath expr="//field[@name='contract_parent_po']" position="after">
                    <field name="claim_id" options="{'no_create': True, 'no_quick_create':True,'no_create_edit':True}" invisible="1"/>
                    <field name="count_claim" invisible='1'/>
                </xpath>
                <xpath expr="//field[@name='analytic_account_group_ids']" position="after">
                    <field name="responsible" readonly="1" force_save="1" attrs="{'invisible': [('state', '!=', 'cancel')]}"/>
                    <field name="reason" readonly="1" force_save="1" attrs="{'invisible': [('state', '!=', 'cancel')]}"/>
                    <!-- <field name="is_renewed" invisible="1"/>
                    <field name="new_contract" attrs="{'invisible': [('is_renewed', '=', False)]}" readonly="1"/> -->
                </xpath>
            </field>
        </record>
    

    </data>
</odoo>