<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- return progressive.claim.report window -->
    <record id="progressive_claim_report_action" model="ir.actions.server">
        <field name="name">progressive.claim.report.action</field>
        <field name="model_id" ref="model_progressive_claim"/>
        <field name="state">code</field>
        <field name="code">
            action = {
                'type': 'ir.actions.act_window',
                'name': 'Progressive Claim',
                'res_model': 'progressive.claim.report',
                'view_mode': 'form',
                'target': 'new',
            }
        </field>
    </record>  

    <menuitem id="progressive_menu_act" 
        name="Progressive Claim" 
        parent="account.menu_finance_reports" 
        action="progressive_claim_report_action" 
        sequence="60"/>

</odoo>