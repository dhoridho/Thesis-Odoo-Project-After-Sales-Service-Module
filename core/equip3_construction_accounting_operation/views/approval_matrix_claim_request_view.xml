<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="progressive_claim_view_form_inherit" model="ir.ui.view">
            <field name="name">progressive.claim.view.form.inherit</field>
            <field name="model">progressive.claim</field>
            <field name="inherit_id" ref="equip3_construction_accounting_operation.progressive_claim_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group[@name='main_form']/group[@name='right_section_main']/field[@name='create_date']" position="after">
                     <field name="is_claim_request_approval_matrix" invisible="1"/>
                </xpath>
                <xpath expr="//notebook/page[@name='claim_request']/field[@name='claim_request_ids']/tree/field[@name='state']" position="attributes">
                    <attribute name="attrs">{'column_invisible': [('parent.is_claim_request_approval_matrix', '=', False)]}</attribute>
                </xpath>
                <xpath expr="//notebook/page[@name='claim_request']/field[@name='claim_request_ids']/tree/field[@name='state']" position="after">
                     <button name="action_confirm_approving_matrix" type="object" string="Approve" class="oe_highlight" attrs="{'invisible': ['|', '|', ('is_claim_request_approval_matrix', '=', False), ('state', '!=', 'to_approve'), ('is_approver', '=', False)]}"/>
                     <button name="action_reject_approving_matrix" type="object" string="Reject" attrs="{'invisible': ['|', '|', ('is_claim_request_approval_matrix', '=', False), ('state', '!=', 'to_approve'), ('is_approver', '=', False)]}"/>
                     <field name="is_claim_request_approval_matrix" invisible="1"/>
                     <field name="is_approval_matrix_filled" invisible="1" />
                     <field name="is_approve_button" invisible="1" />                   
                     <field name="approval_matrix_line_id" invisible="1" />
                     <field name="show_approval_buttons" invisible="1"/>
                     <field name="approvers_ids" widget="many2many_tags" invisible="1"/>
                     <field name="approved_user_ids" widget="many2many_tags" invisible="1" readonly="0"/>
                     <field name="is_approver" invisible="1"/>
                     <field name="approved_user_text" invisible="1"/>
                     <field name="approved_user" invisible="1" readonly="0"/>
                     <field name="employee_id" invisible="1"/>
                     <field name="feedback_parent" invisible="1"/>
                </xpath>
            </field>
        </record>

        <record id="claim_request_view_inherit" model="ir.ui.view">
            <field name="name">claim.request.view.inherit</field>
            <field name="model">claim.request.line</field>
            <field name="inherit_id" ref="equip3_construction_accounting_operation.claim_request_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form/header/button[@name='action_reject']" position="after">
                    <button name="action_confirm_approving_matrix" type="object" string="Approve" class="oe_highlight" attrs="{'invisible': ['|', '|', ('is_claim_request_approval_matrix', '=', False), ('state', '!=', 'to_approve'), ('is_approver', '=', False)]}"/>
                    <button name="action_reject_approving_matrix" type="object" string="Reject" attrs="{'invisible': ['|', '|', ('is_claim_request_approval_matrix', '=', False), ('state', '!=', 'to_approve'), ('is_approver', '=', False)]}"/>
                </xpath>

                <xpath expr="//sheet/group[@name='main_form']/group[@name='right_section_main']/field[@name='create_date']" position="after">
                    <field name="is_claim_request_approval_matrix" invisible="1"/>
                    <field name="is_approval_matrix_filled" invisible="1" />
                    <field name="is_approve_button" invisible="1" />                   
                    <field name="approval_matrix_line_id" invisible="1" />
                    <field name="approvers_ids" widget="many2many_tags" invisible="1"/>
                    <field name="approved_user_ids" widget="many2many_tags" invisible="1" readonly="0"/>
                    <field name="is_approver" invisible="1"/>
                    <field name="approved_user_text" invisible="1"/>
                    <field name="approved_user" invisible="1" readonly="0"/>
                    <field name="employee_id" invisible="1"/>
                    <field name="feedback_parent" invisible="1"/>
                </xpath>

                <xpath expr="//sheet/group[3]" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_claim_request_approval_matrix', '=', True)]}</attribute>
                </xpath>
                
                <xpath expr="//notebook/page[@name='request_ids']" position="after">
                    <page string="Approval Matrix Line" attrs="{'invisible': [('is_claim_request_approval_matrix', '=', False)]}">
                        <group name="approval">
                            <group >
                                <field name="approving_matrix_claim_id" attrs="{'invisible': [('is_claim_request_approval_matrix', '=', False)]}"/>
                            </group>
                        </group>
                        <field name="claim_request_user_ids">
                            <tree editable="bottom" create="false" delete="false">
                                <field name="name"/>
                                <field name="user_ids" widget="many2many_tags" readonly="1" force_save="1"/>
                                <field name="matrix_user_ids" widget="many2many_tags" invisible="1" readonly="1" force_save="1"/>
                                <field name="is_delegation_mail_sent" invisible="1"/>
                                <field name="minimum_approver" readonly="1" force_save="1"/>
                                <field name="timestamp" invisible="1" force_save="1"/>
                                <field name="approver_state" invisible="1" force_save="1"/>
                                <field name="approval_status" readonly="1" force_save="1"/>
                                <field name="approved_time" readonly="1" force_save="1"/>
                                <field name="is_approve" invisible="1"/>
                                <field name="approved_employee_ids" invisible="1"/>
                                <field name="feedback" readonly="1" force_save="1"/>
                            </tree>
                        </field>
                        <!-- <field name="approved_matrix_ids" context="{'approved_matrix_ids': approved_matrix_ids}" class="o_sale_approval_matrix_line">
                            <tree editable="bottom">
                                <field name="sequence" />
                                <field name="user_name_ids" widget="many2many_tags"/>
                                <field name="minimum_approver" />
                                <field name="state_char" />
                                <field name="time_stamp" />
                                <field name="signature"/>
                                <field name="feedback" />
                            </tree>
                        </field> -->
                    </page>
                </xpath>
            </field>
        </record>

        <record id="view_form_approval_matrix_claim_form" model="ir.ui.view">
            <field name="name">approval.matrix.claim.request.form</field>
            <field name="model">approval.matrix.claim.request</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title pr-0">
                            <h1 class="d-flex flex-row justify-content-between">
                                <field name="name" placeholder="Approval Name" class="o_task_name text-truncate"/>
                            </h1>
                        </div>
                        <div>
                            <div>
                                <field name="set_default"/>
                                <label for="set_default"/>
                            </div>
                        </div>
                        <group>
                            <group>
                                <field name="project_id" widget="many2many_tags" attrs="{'required': [('set_default', '=', False)], 'invisible': [('set_default', '=', True)]}"/>
                                <field name="company_id" force_save="1" />
                                <field name="branch_id" required="1"/>
                            </group>
                            <group>
                                <field name="project_director" invisible="1" readonly="1" force_save="1"/>
                                <field name="create_uid" string='Created By'/>
                                <field name="create_date" string='Creation Date'/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Approver Line">
                                <field name="approval_matrix_ids" context="{'approval_matrix_ids' : approval_matrix_ids}">
                                    <tree editable="bottom" class="class_container_approver_matrix">
                                        <field name="sequence" widget="handle" />
                                        <field name="sequence2" force_save="1" readonly="1" class="approver_matrix_sequence"/>
                                        <field name="approvers" widget="many2many_tags" required='1'/>
                                        <field name="minimum_approver" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_tree_approval_matrix_claim_request_tree" model="ir.ui.view">
            <field name="name">approval.matrix.claim.request.tree</field>
            <field name="model">approval.matrix.claim.request</field>
            <field name="arch" type="xml">
                <tree string="Claim Request Approval Matrix" multi_edit="1" sample="1">
                    <field name ="name"/>
                    <field name="branch_id"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>


        <record id="action_approval_matrix_claim_request" model="ir.actions.act_window">
            <field name="name">Customer Claim Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">approval.matrix.claim.request</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('progressive_bill', '=', False)]</field>
            <field name="context">{'default_progressive_bill': False}</field>
            <field name="target">current</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Approval Matrix found. Let's create one!
                </p>
            </field>
        </record>

        <record id="action_approval_matrix_claim_request_vendor" model="ir.actions.act_window">
            <field name="name">Vendor Claim Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">approval.matrix.claim.request</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('progressive_bill', '=', True)]</field>
            <field name="context">{'default_progressive_bill': True}</field>
            <field name="target">current</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Approval Matrix found. Let's create one!
                </p>
            </field>
        </record>

        <menuitem
            id="approving_matrix_construction_accounting_menu"
            name="Claim Request Approval Matrix"
            parent="equip3_accounting_masterdata.approval_matrix_accounting_configuration_menu"
            sequence="-2"/>
            
            <menuitem
                id="approving_matrix_claim_request"
                name="Customer Claim Request"
                parent="approving_matrix_construction_accounting_menu"
                action="action_approval_matrix_claim_request"
                sequence="1"/>
        
            <menuitem
                id="approving_matrix_claim_request_vendor"
                name="Vendor Claim Request"
                parent="approving_matrix_construction_accounting_menu"
                action="action_approval_matrix_claim_request_vendor"
                sequence="2"/>

    </data>
</odoo>
