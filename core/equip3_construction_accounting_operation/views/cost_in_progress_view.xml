<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="view_cost_in_progress_menu_form" model="ir.ui.view">
            <field name="name">cost.in.progress.form</field>
            <field name="model">cost.in.progress</field>
            <field name="arch" type="xml">
                <form string="Cost In Progress">
                    <!-- <header>
                        <button name="add_products" string="Add Products" type="object" class="oe_highlight"/>
                        <button name="delete_products" string="Delete Products" type="object" class="btn btn-danger"/>
                    </header> -->
                    <sheet>
                        <div>
                            <group>
                                <group>
                                    <field name="company_id" required="1"/>
                                    <field name="branch_id" invisible="1"/>
                                    <field name="project_id" required="1"/>
                                    <field name="currency_id"/>
                                </group>
                            </group>
                        </div> 
                        <notebook>
                            <page string="Cost In progress">
                                <field name="cip_line_ids" readonly="1" class="o_gop_line">
                                    <tree editable="bottom">  
                                            <field name="sequence" invisible="1"/>                    
                                            <field name="sr_no"/>
                                            <field name="product_id"/>
                                            <field name="label"/>
                                            <field name="account_id"/>  
                                            <field name="amount"/>                                    
                                    </tree>  
                                </field>                                   
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_cost_in_progress_menu_tree" model="ir.ui.view">
            <field name="name">cost.in.progress.tree</field>
            <field name="model">cost.in.progress</field>
            <field name="arch" type="xml">
                <tree create="1">
                    <field name="name" string="NAME"/>
                    <field name="project_id" string="PROJECT"/>
                </tree>
            </field>
        </record>

        <record id="cost_in_progress_action_const" model="ir.actions.act_window">
            <field name="name">Cost In Progress</field>
            <field name="res_model">cost.in.progress</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- <menuitem id = "cost_in_progress_sub_menu_const_management"
            name     = "Cost In Progress"
            parent   = "abs_construction_management.menu_materials"
            action   = "cost_in_progress_action_const"
            sequence = "8"/>   -->
            
    </data>
</odoo>