<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="unpaid_confirmation_wiz_view" model="ir.ui.view">
        <field name="name">unpaid.confirmation.wiz</field>
        <field name="model">unpaid.confirmation.wiz</field> 
        <field name="arch" type="xml">
            <form string="Confirmation">
                <sheet>
                    <group attrs="{'invisible': [('progressive_bill', '=', True)]}">
                        <field name="txt_inv" nolabel="1" readonly="1"/>
                    </group>
                    <group attrs="{'invisible': [('progressive_bill', '=', False)]}">
                        <field name="txt_bill" nolabel="1" readonly="1"/>
                    </group>
                    <group invisible="1">
                        <field name="progressive_claim_id" readonly="1" force_save="1"/>
                        <field name="progressive_bill" readonly="1" force_save="1"/>
                        <field name="approved_progress"  readonly="1" force_save="1"/>
                        <field name="invoiced_progress" readonly="1" force_save="1"/>
                        <field name="invoice_for" readonly="1" force_save="1"/>
                        <field name="contract_amount" readonly="1" force_save="1"/>
                        <field name="down_payment"  readonly="1" force_save="1"/>
                        <field name="dp_amount" readonly="1" force_save="1"/>
                        <field name="retention1" readonly="1" force_save="1"/>
                        <field name="retention2" readonly="1" force_save="1"/>
                        <field name="retention1_amount" readonly="1" force_save="1"/>
                        <field name="retention2_amount" readonly="1" force_save="1"/>
                        <field name="last_progress" readonly="1" force_save="1"/>
                        <field name="last_amount" readonly="1" force_save="1"/>
                        <field name="tax_id" widget="many2many_tags" readonly="1" force_save="1"/>
                        <field name="milestone_id" readonly="1" force_save="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_confirm" string="Yes" type="object" class="oe_highlight" />
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>