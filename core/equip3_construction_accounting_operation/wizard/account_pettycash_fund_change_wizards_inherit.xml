<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_pettycash_fund_change_form_inherit" model="ir.ui.view">
            <field name="name">Petty Cash Fund Change Wizard Inherit</field>
            <field name="model">account.pettycash.fund.change</field>
            <field name="inherit_id" ref="equip3_accounting_pettycash.account_pettycash_fund_change_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='fund']" position="before">
                    <field name="project" readonly="1"/>
                    <field name="referred_budget_material" readonly="1"
                    attrs="{'invisible': [('referred_budget_budget', '!=', False)]}"/>
                    <field name="referred_budget_budget" readonly="1"
                    attrs="{'invisible': [('referred_budget_budget', '=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
