<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- progressive.claim.report form view -->
    <record id="progressive_claim_report_view_form" model="ir.ui.view">
        <field name="name">progressive.claim.report.view.form</field>
        <field name="model">progressive.claim.report</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="project_id" 
                               options="{'no_create': True, 'no_quick_create': True, 'no_create_edit': True}"/>
                    </group>
                    <group>
                        <field name="print_type" widget="radio"/>
                        <group>
                            <field name="specific_print_type" nolabel="1" widget="radio" attrs="{'invisible': [('print_type', 'not in', ['customer', 'vendor'])]}"/>
                        </group>
                        
                    </group>
                    <label for="progressive_claim_customer_option" string="Progressive Claim Customer Option" attrs="{'invisible': ['|', ('print_type', '!=', 'customer'),('specific_print_type', '=', 'all')]}"/>
                    <field name="progressive_claim_customer_option"
                           domain="[('project_id', '=', project_id), ('progressive_bill', '=', False)]"
                           attrs="{'invisible': ['|', ('print_type', '!=', 'customer'),('specific_print_type', '=', 'all')], 'required': [('print_type', '=', 'customer'),('specific_print_type', '=', 'progressive')]}"
                           options="{'no_create': True, 'no_quick_create': True, 'no_create_edit': True}"
                            />
                    <label for="progressive_claim_subcon_option" string="Progressive Claim Subcon Option" attrs="{'invisible': ['|', ('print_type', '!=', 'vendor'),('specific_print_type', '=', 'all')]}"/>
                    <field name="progressive_claim_subcon_option"
                           domain="[('project_id', '=', project_id), ('progressive_bill', '=', True)]"
                           attrs="{'invisible': ['|',( 'print_type', '!=', 'vendor'),('specific_print_type', '=', 'all')], 'required': [('print_type', '=', 'vendor'),('specific_print_type', '=', 'progressive')]}"
                           options="{'no_create': True, 'no_quick_create': True, 'no_create_edit': True}"
                            />
                    <footer>
                        <button name="action_print_report" string="Print" type="object" class="oe_highlight"/>
                        <button special="cancel" string="Cancel" class="oe_link"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

</odoo>

