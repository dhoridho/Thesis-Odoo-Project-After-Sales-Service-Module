<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_form_claim_request_reject_const" model="ir.ui.view">
        <field name="name">claim.request.reject.form</field>
        <field name="model">claim.request.reject</field> 
        <field name="arch" type="xml">
            <form string="Reason">
                <group>
                    <field name="claim_id" invisible="1"/>
                    <field name="reason" required="1"/>
                </group>
                <footer>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" />
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="view_form_approval_matrix_claim_request_reject" model="ir.ui.view">
        <field name="name">approval.matrix.job.claim.request.reject.form</field>
        <field name="model">approval.matrix.claim.request.reject</field> 
        <field name="arch" type="xml">
            <form string="Reason">
                <group>
                    <field name="claim_id" invisible="1"/>
                    <field name="reason" required="1"/>
                </group>
                <footer>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" />
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>


</odoo>