<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="complete_project_wizard_form_view" model="ir.ui.view">
        <field name="name">complete.project.wizard</field>
        <field name="model">complete.project.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="project_id" invisible="1"/>
                    <field name="project_name" invisible="1"/>
                    <field name="progressive_claim_names" invisible="1"/>
                    <field name="warning" readonly="1" nolabel="1"/>
                </group>
                <footer>
                    <button string="OK" special='cancel' class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="complete_project_date_wizard_form_view" model="ir.ui.view">
        <field name="name">complete.project.date.wizard</field>
        <field name="model">complete.project.wizard.date</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="act_end_date" required='1'/>
                </group>
                <footer>
                    <button name="action_confirm" string="Complete Project" type="object" class="oe_highlight"/>
                    <button string="Cancel" special='cancel' class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>