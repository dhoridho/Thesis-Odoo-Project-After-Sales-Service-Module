<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="cancel_clam_conf_wiz_view" model="ir.ui.view">
        <field name="name">cancel.claim.conf.wiz</field>
        <field name="model">cancel.claim.conf.wiz</field> 
        <field name="arch" type="xml">
            <form string="Cancel Confirmation">
                <sheet>
                    <group attrs="{'invisible': [('progressive_bill', '=', True)]}">
                        <field name="txt_inv" nolabel="1" readonly="1"/>
                    </group>
                    <group attrs="{'invisible': [('progressive_bill', '=', False)]}">
                        <field name="txt_bill" nolabel="1" readonly="1"/>
                    </group>
                    <group invisible="1">
                        <field name="claim_id" readonly="1" force_save="1"/>
                        <field name="progressive_bill" readonly="1" force_save="1"/>
                        <field name="contract_parent"  readonly="1" force_save="1"/>
                        <field name="contract_parent_po" readonly="1" force_save="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" />
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>