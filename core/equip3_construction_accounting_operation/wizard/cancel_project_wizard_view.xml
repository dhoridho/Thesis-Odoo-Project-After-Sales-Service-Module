<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="cancel_project_wizard_form_view" model="ir.ui.view">
        <field name="name">cancel.project.wizard</field>
        <field name="model">cancel.project.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="warning" readonly="1" nolabel="1"/>
                    <div class="oe_button_box oe_left" name="button_box" groups="base.group_user" attrs="{'invisible': [('sale_order_count','=',0)]}">
                        <button class="oe_stat_button" name="sale_order" type="object" icon="o-hm-smart-crm-agreement">
                            <field string="Contracts" name="sale_order_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_button_box oe_left" name="button_box" groups="base.group_user" attrs="{'invisible': [('purchase_order_count','=',0)]}">
                        <button class="oe_stat_button" name="purchase_subcon" type="object" icon="o-hm-smart-construction-purchase-agreement">
                            <field string="PO Subcon" name="purchase_order_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_button_box oe_left" name="button_box" groups="base.group_user" attrs="{'invisible': [('cost_sheet_count','=',0)]}">
                        <button class="oe_stat_button" name="cost_sheet" type="object" icon="o-hm-smart-construction-cost-sheet">
                            <field string="Cost Sheet" name="cost_sheet_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_button_box oe_left" name="button_box" groups="base.group_user" attrs="{'invisible': [('budget_count','=',0)]}"> 
                        <button class="oe_stat_button" name="project_budget" type="object" icon="o-hm-smart-construction-project-budget">
                            <field string="Budget" name="budget_count" widget="statinfo"/>
                        </button>  
                    </div>
                    <div class="oe_button_box oe_left" name="button_box" groups="base.group_user" attrs="{'invisible': [('job_order_count','=',0)]}">
                        <button class="oe_stat_button" name="job_order" type="object" icon="o-hm-smart-construction-job-order">
                            <field string="Job Order" name="job_order_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_button_box oe_left" name="button_box" groups="base.group_user" attrs="{'invisible': [('job_subcon_count','=',0)]}">  
                        <button class="oe_stat_button" name="job_order_subcon" type="object" icon="o-hm-smart-construction-job-order">
                            <field string="Job Subcon" name="job_subcon_count" widget="statinfo"/>
                        </button>  
                    </div>
                    <div class="oe_button_box oe_left" name="button_box" groups="base.group_user" attrs="{'invisible': [('issue_count','=',0)]}">  
                        <button class="oe_stat_button" name="project_issue" type="object" icon="o-hm-smart-construction-issues">
                            <field string="Issue" name="issue_count" widget="statinfo"/>
                        </button>  
                    </div>
                    <div class="oe_button_box oe_left" name="button_box" groups="base.group_user" attrs="{'invisible': [('claim_customer_count','=',0)]}">
                        <button class="oe_stat_button" name="progressive_claim_customer" type="object" icon="o-hm-smart-construction-claim">
                            <field string="Claim" name="claim_customer_count" widget="statinfo"/>
                        </button>                              
                    </div>
                    <div class="oe_button_box oe_left" name="button_box" groups="base.group_user" attrs="{'invisible': [('claim_vendor_count','=',0)]}">
                        <button class="oe_stat_button" name="progressive_claim_subcon" type="object" icon="o-hm-smart-construction-claim">
                            <field string="Sub Claim" name="claim_vendor_count" widget="statinfo"/>
                        </button> 
                    </div> 
                    <group>
                        <field name="project_id" invisible="1"/>
                        <field name="project_name" invisible="1"/>
                    </group>
                    <div class="oe_button_box oe_left" name="button_box" groups="base.group_user" attrs="{'invisible': [('claim_invoice_count','=',0)]}">
                        <button class="oe_stat_button" name="progressive_invoice" type="object" icon="o-hm-smart-construction-invoices">
                            <field string="Invoices" name="claim_invoice_count" widget="statinfo"/>
                        </button>  
                    </div>
                    <div class="oe_button_box oe_left" name="button_box" groups="base.group_user" attrs="{'invisible': [('claim_bill_count','=',0)]}">
                        <button class="oe_stat_button" name="progressive_bill" type="object" icon="o-hm-smart-construction-bills">
                            <field string="Bills" name="claim_bill_count" widget="statinfo"/>
                        </button>                              
                    </div>
                    <group>
                        <field name="progressive_claim_names" invisible="1"/>
                        <field name="department_type" invisible="1"/>
                    </group>
                    <group>
                        <field name="responsible" attrs="{'invisible': [('department_type', '=', 'department')], 'required':[('department_type', '=', 'project')]}"/>
                        <field name="reason"/>
                    </group>
                </sheet>
                <footer>
                    <button name="confirm" type="object" string="Confirm" class="oe_highlight"/>
                    <button string="Cancel" special='cancel' class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>