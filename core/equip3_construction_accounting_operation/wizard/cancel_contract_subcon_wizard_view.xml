<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- cancel.contract.subcon form view -->
    <record id="cancel_contract_subcon_view_form" model="ir.ui.view">
        <field name="name">cancel.contract.subcon.view.form</field>
        <field name="model">cancel.contract.subcon</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <field name="contract_subcon" invisible="1"/>
                    <field name="warning" readonly="1" nolabel="1"/>
                    <div class="oe_button_box oe_left" name="button_box" groups="base.group_user" attrs="{'invisible': [('purchase_order_count','=',0)]}">
                        <button class="oe_stat_button" name="purchase_subcon" type="object" icon="o-hm-smart-construction-purchase-agreement">
                            <field string="PO Subcon" name="purchase_order_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_button_box oe_left" name="button_box" groups="base.group_user" attrs="{'invisible': [('job_subcon_count','=',0)]}">
                        <button class="oe_stat_button" name="job_order_subcon" type="object" icon="o-hm-smart-construction-job-order">
                            <field string="Job Subcon" name="job_subcon_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_button_box oe_left" name="button_box" groups="base.group_user" attrs="{'invisible': [('sub_claim_count','=',0)]}">
                        <button class="oe_stat_button" name="progressive_claim_subcon" type="object" icon="o-hm-smart-construction-claim">
                            <field string="Sub Claim" name="sub_claim_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_button_box oe_left" name="button_box" groups="base.group_user" attrs="{'invisible': [('bill_count','=',0)]}">
                        <button class="oe_stat_button" name="progressive_bill" type="object" icon="o-hm-smart-construction-bills">
                            <field string="Bills" name="bill_count" widget="statinfo"/>
                        </button>
                    </div>
                    <br/>
                    <group>
                        <field name="contract_subcon" invisible="1"/>
                    </group>
                    <field name="warning_2" readonly="1" nolabel="1" attrs="{'invisible': [('cost_sheet_count','=',0)]}"/>
                    <group>
                        <field name="contract_subcon" invisible="1"/>
                    </group>
                    <div class="oe_button_box oe_left" name="button_box" groups="base.group_user" attrs="{'invisible': [('cost_sheet_count','=',0)]}">
                        <button class="oe_stat_button" name="cost_sheet" type="object" icon="o-hm-smart-construction-cost-sheet">
                            <field string="Cost Sheet" name="cost_sheet_count" widget="statinfo"/>
                        </button>
                    </div>
                    <br/>
                    <group>
                        <field name="responsible" required="1"/>
                        <field name="reason"/>
                    </group>
                </sheet>
                <footer>
                    <button name="confirm" type="object" string="Confirm" class="oe_highlight"/>
                    <button string="Cancel" special='cancel' class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- cancel.contract.subcon form view -->
    <record id="cancel_contract_subcon_variation_order_view_form" model="ir.ui.view">
        <field name="name">cancel.contract.subcon.view.form</field>
        <field name="model">cancel.contract.subcon.variation.order</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <field name="contract_subcon" invisible="1"/>
                    <field name="vo_payment_type" invisible="1"/>
                    <field name="warning" readonly="1" nolabel="1"/>
                    <div class="oe_button_box oe_left" name="button_box" groups="base.group_user" attrs="{'invisible': [('purchase_order_count','=',0)]}">
                        <button class="oe_stat_button" name="purchase_subcon" type="object" icon="o-hm-smart-construction-purchase-agreement">
                            <field string="PO Subcon" name="purchase_order_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_button_box oe_left" name="button_box" groups="base.group_user" attrs="{'invisible': [('job_subcon_count','=',0)]}">
                        <button class="oe_stat_button" name="job_order_subcon" type="object" icon="o-hm-smart-construction-job-order">
                            <field string="Job Subcon" name="job_subcon_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_button_box oe_left" name="button_box" groups="base.group_user" attrs="{'invisible': ['|', ('sub_claim_count','=',0), ('vo_payment_type','=','join_payment')]}">
                        <button class="oe_stat_button" name="progressive_claim_subcon" type="object" icon="o-hm-smart-construction-claim">
                            <field string="Sub Claim" name="sub_claim_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_button_box oe_left" name="button_box" groups="base.group_user" attrs="{'invisible': [('bill_count','=',0)]}">
                        <button class="oe_stat_button" name="progressive_bill" type="object" icon="o-hm-smart-construction-bills">
                            <field string="Bills" name="bill_count" widget="statinfo"/>
                        </button>
                    </div>
                    <br/>
                    <group>
                        <field name="contract_subcon" invisible="1"/>
                    </group>
                    <field name="warning_2" readonly="1" nolabel="1" attrs="{'invisible': [('cost_sheet_count','=',0)]}"/>
                    <group>
                        <field name="contract_subcon" invisible="1"/>
                    </group>
                    <div class="oe_button_box oe_left" name="button_box" groups="base.group_user" attrs="{'invisible': [('cost_sheet_count','=',0)]}">
                        <button class="oe_stat_button" name="cost_sheet" type="object" icon="o-hm-smart-construction-cost-sheet">
                            <field string="Cost Sheet" name="cost_sheet_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_button_box oe_left" name="button_box" groups="base.group_user" attrs="{'invisible': ['|', ('sub_claim_count','=',0), ('vo_payment_type','=','split_payment')]}">
                        <button class="oe_stat_button" name="progressive_claim_subcon" type="object" icon="o-hm-smart-construction-claim">
                            <field string="Sub Claim" name="sub_claim_count" widget="statinfo"/>
                        </button>
                    </div>
                    <br/>
                    <group>
                        <field name="responsible" required="1"/>
                        <field name="reason"/>
                    </group>
                </sheet>
                <footer>
                    <button name="confirm" type="object" string="Confirm" class="oe_highlight"/>
                    <button string="Cancel" special='cancel' class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>