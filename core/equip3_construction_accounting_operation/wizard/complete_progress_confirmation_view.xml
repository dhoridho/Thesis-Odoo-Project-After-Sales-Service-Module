<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="complete_progress_confirmation_view" model="ir.ui.view">
        <field name="name">complete.progress.confirmation</field>
        <field name="model">complete.progress.confirmation</field> 
        <field name="arch" type="xml">
            <form string="Confirmation">
                <sheet>
                    <group>
                        <field name="txt_msg" nolabel="1" readonly="1"/>
                        <field name="progressive_claim_id" invisible="1" />
                    </group>
                    <group>
                        <field name="reason" required="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_confirm" string="Yes" type="object" class="oe_highlight" />
                    <button string="No" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>