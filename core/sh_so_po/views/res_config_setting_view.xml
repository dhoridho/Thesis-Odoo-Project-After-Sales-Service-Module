<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Res Config form view -->
    <record id="sh_so_po_inherit_res_config_setting_form" model="ir.ui.view">
        <field name="name">sh.so.po.inherit.res.config.setting.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='sale_management']" position="inside">
                <h2>Create Purchase Order From Sale Order</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="quot_to_po" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="quot_to_po" />
                            <div class="text-muted">
                                    Create Purchase Order From Quotation in Quotation, Quotation Sent Status
                                </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="so_to_po" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="so_to_po" />
                            <div class="text-muted">
                                   Create Purchase Order From Sale Order in Sales Order, Locked Status
                                </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>