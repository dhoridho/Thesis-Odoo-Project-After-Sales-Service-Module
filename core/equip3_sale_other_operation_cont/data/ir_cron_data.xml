<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="blanket_order_rule" model="ir.rule">
		<field name="name">Blanket Order multi-company</field>
		<field name="model_id" ref="model_saleblanket_saleblanket"/>
		<field name="domain_force">[('company_id', 'in', company_ids)]</field>
		<field name="groups" eval="[(4, ref('base.group_user'))]"/>
	</record>

	<record forcecreate="True"  id="ir_cron_auto_done_blanket" model="ir.cron">
		<field name="name">Auto Done and Auto Expired Sales Blanket Order</field>
		<field name="model_id" ref="model_saleblanket_saleblanket"/>
		<field name="state">code</field>
		<field name="code">model._auto_done_bo()</field>
		<field name="user_id" ref="base.user_root"/>
		<field name="interval_number">1</field>
		<field name="interval_type">days</field>
		<field name="numbercall">-1</field>
		<field eval="False" name="doall"/>
	</record>
</odoo>