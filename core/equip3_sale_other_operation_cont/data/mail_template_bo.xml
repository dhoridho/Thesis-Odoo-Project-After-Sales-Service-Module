		<record id="email_template_bo_expiry_reminder" model="mail.template">
			<field name="name">Blanket Order: Expiry Reminder - On Expired</field>
			<field name="model_id" ref="equip3_sale_other_operation_cont.model_saleblanket_saleblanket"/>
			<field name="email_from">${(object.company_id.email) |safe}</field>
			<field name="subject">${object.company_id.name} Blanket Order (Ref ${object.name or 'n/a' })</field>
			<field name="email_to" >${object.user_id.email}</field>
			<field name="body_html" type="html">
				<div style="margin: 0px; padding: 0px;">
					<p style="margin: 0px; padding: 0px; font-size: 13px;">
						Dear ${object.user_id.name}
						<br/><br/>
						Here is information that the purchase request <strong>${object.name}</strong>
						has been expired since
						% if object.expiry_date:
						<strong>${object.expiry_date}</strong>.
						% else:
						<strong>undefined</strong>.
						% endif
						<br/><br/>
					</p>
				</div>
			</field>
		</record>

		<record id="email_template_bo_befor_expiry_reminder" model="mail.template">
			<field name="name">Blanket Order: Expiry Reminder - Before</field>
