<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_form_bo_approval_matrix" model="ir.ui.view">
		<field name="name">bo.approval.matrix.form</field>
		<field name="model">blanket.approval.matrix</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<group>
							<field name="name"/>
							<field name="company_id" readonly="True"/>
							<field name="branch_id"/>

						</group>
						<group>
							<field name="create_date"/>
							<field name="create_uid"/>
							<field name="config"/>
							<field name="minimum_amt"/>
							<field name="maximum_amt"/>
						</group>
					</group>
					<notebook>
						<page string="Approver Line">
							<field name="approver_matrix_line_ids" context="{'approver_matrix_line_ids' : approver_matrix_line_ids}">
								<tree editable="bottom" class="class_container_approver_matrix">
									<field name="sequence" widget="handle" />
									<field name="sequence2" force_save="1" readonly="1" class="approver_matrix_sequence"/>
									<field name="user_name_ids" widget="many2many_tags" />
									<field name="minimum_approver" />
								</tree>
							</field>
						</page>
					</notebook>
				</sheet>
				<div class="oe_chatter">
					<field name="message_follower_ids"/>
					<field name="activity_ids"/>
					<field name="message_ids"/>
				</div>
			</form>
		</field>
	</record>

	<record id="view_form_bo_approval_matrix_tree" model="ir.ui.view">
		<field name="name">Blanket Order Approval Matrix Tree</field>
		<field name="model">blanket.approval.matrix</field>
		<field name="arch" type="xml">
			<tree string="Lines">
				<field name="name"/>
				<field name="company_id"/>
				<field name="branch_id" />
				<field name="config"/>
				<field name="minimum_amt"/>
				<field name="maximum_amt"/>
			</tree>
		</field>
	</record>

	<record id="action_bo_approval_matrix" model="ir.actions.act_window">
		<field name="name">Blanket Order Approval Matrix</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">blanket.approval.matrix</field>
		<field name="view_mode">tree,form</field>
		<field name="target">current</field>
	</record>

	<menuitem id="bo_approval_matrix"
			name="Blanket Order Approval Matrix"
			parent="equip3_sale_operation.menu_approval_matrix_sale_order"
			action="action_bo_approval_matrix"
			active="False"
			sequence="5"/>


</odoo>
