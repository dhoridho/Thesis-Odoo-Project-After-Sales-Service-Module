<?xml version ="1.0" encoding="utf-8" ?>
<odoo>
	<record id="res_config_settings_view_form_inherit_bo" model="ir.ui.view">
		<field name="name">res.config.settings.view.form.inherit_bo</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id" ref="sale.res_config_settings_view_form" />
		<field name="arch" type="xml">
			<xpath expr="//div[hasclass('app_settings_block')]/div[@name='quotation_order_setting_container']" position="after">
				<h2>Blanket Order</h2>
				<div class="row mt16 o_settings_container">
					<div class="col-12 col-lg-6 o_setting_box">
						<div class="o_setting_left_pane">
							<field name="bo_before_exp_notify"/>
						</div>
						<div class="o_setting_right_pane">
							<label for="bo_days_before_exp_notify" string="Notify Before Expiry Date"/>
							<div class="text-muted">
								Set email notification time before expiry date
							</div>
							<div attrs="{'invisible': [('bo_before_exp_notify','=',False)]}">
								<field name="bo_days_before_exp_notify"/> Days
							</div>
						</div>
					</div>
					<div class="col-12 col-lg-6 o_setting_box">
						<div class="o_setting_left_pane" />
						<div class="o_setting_right_pane">
							<span class="o_form_label">Default Expiry Date</span>
							<div class="text-muted">
								Set a default expiry date on your blanket orders
							</div>
							<div class="text-muted">
								<field name="bo_expiry_date" /> Days
							</div>
						</div>
					</div>
					<div class="col-12 col-lg-6 o_setting_box">
						<div class="o_setting_left_pane">
							<field name="bo_on_date_notify" />
						</div>
						<div class="o_setting_right_pane">
							<label for="bo_on_date_notify" string="Notify on Expiry" />
							<div class="text-muted">
								Set email notification on expired Blanket Order
							</div>
						</div>
					</div>
					<div class="col-12 col-lg-6 o_setting_box">
						<div class="o_setting_left_pane">
							<field name="bo_approval_email_notify" />
						</div>
						<div class="o_setting_right_pane">
							<label for="bo_approval_email_notify" string="Email Notification for Blanket Order Approval" />
							<div class="text-muted">
								If this is checked, it will send  a Email Notification for all Blanket Order Approver
							</div>
						</div>
					</div>
					<div class="col-12 col-lg-6 o_setting_box">
						<div class="o_setting_left_pane">
							<field name="bo_approval_wa_notify" />
						</div>
						<div class="o_setting_right_pane">
							<label for="bo_approval_wa_notify" string="Whatsapp Notification for Blanket Order Approval" />
							<div class="text-muted">
								If this is checked, it will send a Whatsapp Notification for all Blanket Order Approver
							</div>
						</div>
					</div>
				</div>
			</xpath>
		</field>
	</record>

