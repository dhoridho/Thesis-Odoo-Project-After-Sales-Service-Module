<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="force_done_memory_form1">
			<field name="name">force.done.memory.form1</field>
			<field name="model">force.done.memory</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<p>
								Are you sure want to force done this Blanket Order ?. The remaining quantity is <field name="remaining_qty" readonly="1" class="oe_inline" /> from <field name="qty" readonly="1" class="oe_inline" />
							</p>
						</group>
					</sheet>
					<footer>
						<button string="Ok" type="object" name="action_wiz_2" class="oe_highlight"/>
						<button string="Cancel" class="oe_link" special="cancel"/>
					</footer>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="force_done_memory_form2">
			<field name="name">force.done.memory.form2</field>
			<field name="model">force.done.memory</field>
			<field name="arch" type="xml">
				<form>
					<label for="reason" string="Reason:"/><p/>
					<field name="reason" style="font-size: 12px"/>
					<footer>
						<button string="Confirm" type="object" name="action_wiz_3" class="oe_highlight"/>
						<button string="Cancel" type="object" name="action_wiz_4"/>
					</footer>
				</form>
			</field>
		</record>
	</data>
</odoo>