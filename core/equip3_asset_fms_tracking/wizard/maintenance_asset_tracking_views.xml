<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="maintenance_asset_tracking_wizard_view_form" model="ir.ui.view">
        <field name="name">maintenance.asset.tracking.wizard.view.form</field>
        <field name="model">maintenance.asset.tracking.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <div class="row" id="asset_tracking_page">
                        <div class="col-5">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <button class="btn btn-secondary" id="btn-search-plat"><i class="search-button fa fa-search"></i></button>
                                </div>
                                <input type="text" class="form-control form-control-lg" placeholder="Cari Plat Nomor Kendaraan" id="input-plat"/>
                            </div>
                            <notebook>
                                <page name="vehicle_page" string="Kendaraan">
                                    <notebook>
                                        <page name="vehicle_all_page" string="All">
                                            <div id="vehicle-all-table">
                                            </div>
                                            <!-- <table class="table table-bordered table-hover" >
                                                <tbody>
                                                </tbody>
                                            </table> -->
                                        </page>
                                        <page name="vehicle_online_page" string="Online">
                                            <div id="vehicle-online-table">
                                            </div>
                                        </page>
                                        <page name="vehicle_offline_page" string="Offline">
                                            <div id="vehicle-offline-table">
                                            </div>
                                        </page>
                                    </notebook>
                                </page>
                                <page name="notification_page" string="Notification"></page>
                                <page name="history_page" string="History">
                                    <table class="tbl">
                                        <tr>
                                            <td class="text-center">
                                                <span>Licence plate</span>
                                            </td>
                                            <td class="text-center">
                                                <select class="form-control licence_plate" id="licence_plate">
                                                </select>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="2">
                                                <field name="history_type" widget='radio' options="{'horizontal': true}" class="vc_hisotry_date"></field>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <!-- <input type="date" class="form-control vc_start_date"/> -->
                                                <field name="start_date"></field>
                                               
                                            </td>
                                            <td>
                                                 <!-- <input type="date" class="form-control vc_end_date"/> -->
                                                  <field name="end_date"></field>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="2">
                                                <button class="btn btn-success">Check</button>
                                            </td>
                                        </tr>
                                    </table>
                                    
                                </page>
                            </notebook>
                        </div>
                        <div class="col-7 m-0 pl-0">
                            <div id="map" class="w-100" style="height: 700px"></div>
                        </div>
                    </div>
                </sheet>
                <script type="text/javascript" src="/equip3_asset_fms_tracking/static/src/js/script_new_asset_fms.js"/>
            </form>
        </field>
    </record>

    <record id="maintenance_asset_tracking_wizard_action" model="ir.actions.act_window">
        <field name="name">Asset Tracking</field>
        <field name="res_model">maintenance.asset.tracking.wizard</field>
        <field name="view_mode">form</field>
    </record>

    <menuitem
        id="maintenance_asset_tracking_wizard_menu"
        name="Asset Tracking"
        action="maintenance_asset_tracking_wizard_action"
        parent="maintenance.menu_maintenance_title"
        sequence="2"/>
</odoo>
