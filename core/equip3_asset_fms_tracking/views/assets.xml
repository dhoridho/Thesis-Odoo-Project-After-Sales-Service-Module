<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="assets_gmaps_fms" name="Google Maps Assets">
        <t t-set="google_maps_api_key_fms" t-value="request.env['ir.config_parameter'].sudo().get_param('base_geolocalize.google_map_api_key')" />
        <t t-if="google_maps_api_key_fms">
            <!-- <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script> -->
            <script src="/equip3_asset_fms_tracking/static/src/js/fetch.min.js" type="text/javascript"/>
            <script type="text/javascript">
                function initMapAssetFmsTrack() {
                  // To support Google Maps JavaScript API callback
                }
            </script>
            <script t-attf-src="https://maps.googleapis.com/maps/api/js?v=quarterly&amp;key=#{google_maps_api_key_fms}&amp;callback=initMapAssetFmsTrack&amp;libraries=marker&amp;v=beta"></script>
        </t>
        <t t-else="">
            <!-- <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script> -->
            <script src="/equip3_asset_fms_tracking/static/src/js/fetch.min.js" type="text/javascript"/>
            <script src="https://maps.googleapis.com/maps/api/js?v=quarterly"></script>
        </t>
        <!-- <script type="text/javascript" src="/equip3_asset_fms_tracking/static/src/js/jquery.timeago.js"/> -->
    </template>
    <template id="webclient_bootstrap" name="webclient_bootstrap gmaps" inherit_id="web.webclient_bootstrap">
        <xpath expr="//t[@t-call-assets='web.assets_common']" position="before">
            <style>
                .price-tag {
                    background-color: #fff;
                    border-radius: 8px;
                    color: #000;
                    font-size: 12px;
                    padding: 5px 10px;
                    position: relative;
                }
                .price-tag::after {
                    content: "";
                    position: absolute;
                    left: 50%;
                    top: 100%;
                    transform: translate(-50%, 0);
                    width: 0;
                    height: 0;
                    border-left: 8px solid transparent;
                    border-right: 8px solid transparent;
                    border-top: 8px solid #fff;
                }
                .car-icon{
                    padding: 0px 0px;
                    transform: translate(15%, 85%) translate(0px, 0px);
                }
            </style>
            <t t-call="equip3_asset_fms_tracking.assets_gmaps_fms" />
        </xpath>
    </template>
</odoo>