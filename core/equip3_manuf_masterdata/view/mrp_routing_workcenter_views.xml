<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mrp_rounting_workcenter_tree_view_inherit" model="ir.ui.view">
        <field name="name">mrp.routing.workcenter.tree.view.inherit</field>
        <field name="model">mrp.routing.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_routing_workcenter_tree_view"/>
        <field name="arch" type="xml">
        	<field name="workcenter_id" position="after" options="{'no_create_edit': True, 'no_create': True}">
        		<field name="location_id" string="Work Center Location"/>
                <field name="workcenter_type" invisible="1"/>
                <field name="branch_id" invisible="1"/>
        	</field>
            <xpath expr="//field[@name='workcenter_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="workcenter_group_id" invisible="1"/>
                <field name="operation_name" string="Name"/>
            </xpath>
        </field>
    </record>

    <record id="mrp_rounting_workcenter_view_inherit" model="ir.ui.view">
        <field name="name">mrp.routing.workcenterview.inherit</field>
        <field name="model">mrp.routing.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_routing_workcenter_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='workcenter_id']" position="attributes">
                <attribute name="attrs">{'invisible': [('workcenter_type', '!=', 'without_group')],'required': [('workcenter_type', '=', 'without_group')]}</attribute>
            </xpath>
            <field name="name" position="after">
                <field name="workcenter_type" widget="radio"/>
                <field name="workcenter_group_id" attrs="{'invisible': [('workcenter_type', '!=', 'with_group')],'required': [('workcenter_type', '=', 'with_group')]}" string="Group Name"/>
            </field>
            <xpath expr="//field[@name='company_id']" position="attributes">
                <attribute name="readonly">1</attribute>
                <attribute name="force_save">1</attribute>
            </xpath>
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="branch_id" readonly="context.get('default_branch_id', False)" force_save="1" options="{'no_create': True, 'no_create_edit': True}"/>
            </xpath>
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="is_branch_filled" invisible="1"/>
            </xpath>
            <field name="workcenter_id" position="after">
                <field name="operation_name" invisible="1"/>
            </field>
            <xpath expr="//field[@name='sequence']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <!--xpath expr="//field[@name='bom_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath-->
        </field>
    </record>
    
</odoo>