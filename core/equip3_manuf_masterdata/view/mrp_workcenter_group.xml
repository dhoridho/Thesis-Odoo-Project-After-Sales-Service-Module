<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mrp_workcenter_group_form" model="ir.ui.view">
        <field name="name">view.mrp.workcenter.group.form</field>
        <field name="model">mrp.workcenter.group</field>
        <field name="arch" type="xml">
            <form string="Work Center Group">
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="create_date" string="Creation Date"/>
                            <field name="create_uid" string="Created By"/>
                            <field name="company_id" readonly="1" force_save="1"/>
                            <field name="is_branch_required" invisible="1"/>
                            <field name="branch_id" attrs="{'required': [('is_branch_required', '=', True)]}" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="next_workcenter_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Work Center" name="workcenters">
                            <field name="workcenter_ids" domain="[('branch_id', '=', branch_id)]" context="{
                                'form_view_ref': 'mrp.mrp_workcenter_view'
                            }">
                                <tree string="Work Center">
                                    <field name="sequence" widget="handle"/>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="active" invisible="1"/>
                                    <field name="last_finished_date"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_mrp_workcenter_group_tree" model="ir.ui.view">
        <field name="name">view.mrp.workcenter.group.tree</field>
        <field name="model">mrp.workcenter.group</field>
        <field name="arch" type="xml">
            <tree string="Work Center Group">
                <field name="code" string="Group Code"/>
                <field name="name" string="Group Name"/>
            </tree>
        </field>
    </record>

    <record id="action_view_mrp_workcenter_group" model="ir.actions.act_window">
        <field name="name">Work center Group</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.workcenter.group</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Manufacturing Work Center Group
            </p>
        </field>
    </record>

</odoo>