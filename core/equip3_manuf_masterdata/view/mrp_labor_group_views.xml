<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mrp_labor_group_tree" model="ir.ui.view">
        <field name="name">view.mrp.labor.group.tree</field>
        <field name="model">mrp.labor.group</field>
        <field name="arch" type="xml">
            <tree string="Labor Group">
                <field name="name"/>
                <field name="head_id"/>
            </tree>
        </field>
    </record>

    <record id="view_mrp_labor_group_form" model="ir.ui.view">
        <field name="name">view.mrp.labor.group.form</field>
        <field name="model">mrp.labor.group</field>
        <field name="arch" type="xml">
            <form string="Labor Group">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="head_id" options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                            <field name="is_branch_required" invisible="1"/>
                            <field name="branch_id" attrs="{'required': [('is_branch_required', '=', True)]}" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="create_uid" string="Created By"/>
                            <field name="create_date" string="Created On"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Labor" name="labor">
                            <field name="labor_ids">
                                <tree string="Labor">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_view_mrp_labor_group" model="ir.actions.act_window">
        <field name="name">Labor Group</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.labor.group</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Create Labor Group
          </p>
        </field>
    </record>
</odoo>