<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- WORKCENTER DASHBOARD -->
    <menuitem id="mrp_workcenter_overview.menu_mrp_dashboard"
              name="Work Center Dashboard"
              action="mrp.mrp_workcenter_kanban_action"
              groups="mrp.group_mrp_routings"
              parent="mrp.menu_mrp_root"
              sequence="10"/>

    <!-- OPERATIONS -->
    <menuitem id="mrp.menu_mrp_manufacturing" 
              name="Operations" 
              parent="mrp.menu_mrp_root" 
              sequence="20">

        <menuitem id="mrp.menu_mrp_production_action" 
                  name="Production Order" 
                  action="mrp.mrp_production_action" 
                  sequence="10"/>
    
        <menuitem id="mrp.menu_mrp_workorder_todo"
                  name="Production Work Order"
                  action="mrp.mrp_workorder_todo"
                  groups="mrp.group_mrp_routings"
                  sequence="20"/>

        <menuitem id="mrp.menu_mrp_unbuild"
                  name="Unbuild Order"
                  action="mrp.mrp_unbuild"
                  sequence="30"/>
    </menuitem>

    <!-- PLANNING -->
    <menuitem id="mrp.mrp_planning_menu_root" 
              name="Planning" 
              parent="mrp.menu_mrp_root" 
              sequence="30">
    </menuitem>

    <!-- MASTER DATA -->
    <menuitem id="mrp.menu_mrp_bom" 
              name="Master Data" 
              parent="mrp.menu_mrp_root" 
              sequence="40">

        <menuitem id="mrp.menu_mrp_product_form"
                  name="Product"
                  action="mrp.product_template_action"
                  sequence="10"/>

        <menuitem id="mrp.product_variant_mrp"
                  name="Product Variant"
                  action="mrp.mrp_product_variant_action"
                  groups="product.group_product_variant"
                  sequence="20"/>

        <menuitem id="mrp.menu_mrp_bom_form_action"
                  action="mrp.mrp_bom_form_action"
                  sequence="30"/>

        <menuitem id="mrp.menu_mrp_traceability"
                  name="Lots/Serial Number"
                  action="stock.action_production_lot_form"
                  groups="stock.group_production_lot"
                  sequence="40"/>
    </menuitem>

    <!-- REPORTING -->
    <menuitem id="mrp.menu_mrp_reporting"
              name="Reporting"
              parent="mrp.menu_mrp_root"
              sequence="50">
    </menuitem>

    <!-- COFIGURATION -->
    <menuitem id="mrp.menu_mrp_configuration"
              name="Configuration"
              groups="mrp.group_mrp_manager"
              parent="mrp.menu_mrp_root" 
              sequence="100">

        <menuitem id="mrp_configuration_menu_act" 
                  name="Configuration" 
                  sequence="10">

            <menuitem id="mrp.menu_mrp_config" 
                      name="Settings" 
                      action="mrp.action_mrp_configuration" 
                      groups="base.group_system"
                      sequence="10"/>

            <menuitem id="mrp.menu_view_resource_search_mrp" 
                      name="Work Center" 
                      action="mrp.mrp_workcenter_action" 
                      groups="mrp.group_mrp_routings" 
                      sequence="20"/>

            <menuitem id="menu_action_view_mrp_workcenter_group"
                      name="Work Center Group"
                      action="action_view_mrp_workcenter_group"
                      groups="mrp.group_mrp_routings" 
                      sequence="30"/>

            <menuitem id="menu_mrp_labor_group" 
                      name="Labor Group" 
                      action="action_view_mrp_labor_group" 
                      sequence="40"/>

        </menuitem>

    </menuitem>

    <!-- HIDDEN MRP MENUS -->
    <!-- Run Scheduler -->
    <record id="mrp.menu_procurement_compute_mrp" model="ir.ui.menu">
        <field name="active" eval="False"/>
    </record>

    <!-- Scrap -->
    <record id="mrp.menu_mrp_scrap" model="ir.ui.menu">
        <field name="active" eval="False"/>
    </record>

    <!-- ACT WINDOW -->
    <!-- delete 's' from menu names -->
    <record id="mrp.mrp_production_action" model="ir.actions.act_window">
        <field name="name">Production Order</field>
    </record>
    <record id="mrp.mrp_workorder_todo" model="ir.actions.act_window">
        <field name="name">Production Work Order</field>
    </record>
    <record id="mrp.mrp_unbuild" model="ir.actions.act_window">
        <field name="name">Unbuild Order</field>
    </record>
    <record id="mrp.product_template_action" model="ir.actions.act_window">
        <field name="name">Product</field>
    </record>

</odoo>