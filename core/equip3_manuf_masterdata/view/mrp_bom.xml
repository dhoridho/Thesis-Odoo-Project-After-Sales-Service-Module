<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mrp_bom_form_view" model="ir.ui.view">
        <field name="name">bills.of.materials.form.inherit</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header></header>
            </xpath>
            
            <field name="company_id" position="after">
                <field name="is_branch_required" invisible="1"/>
                <field name="branch_id" attrs="{'required' : [('is_branch_required', '=', True)]}" options="{'no_create': True, 'no_create_edit':True}"/>
                <field name="create_date" readonly="1" string="Created On"/>
                <field name="create_uid" string="Created By" required="1" readonly="1"/>
                <field name="bom_tools" invisible="1"/>

                <field name="operation_two_ids" widget="many2many_tags" invisible="1"/>
                <field name="equip_bom_type" invisible="1"/>
                <field name="use_operations" invisible="1"/>
            </field>
            <field name="company_id" position="attributes">
                <attribute name="force_save">1</attribute>
            </field>
            <xpath expr="//field[@name='product_tmpl_id']" position="before">
                <field name="finished_type" widget="radio"/>
            </xpath>
            <xpath expr="//field[@name='product_tmpl_id']" position="attributes">
                <attribute name="options">{'no_create': True,'no_create_edit':True}</attribute>
                <attribute name="string">Finished Goods</attribute>
                <attribute name="domain">[('type', '=', 'product'), '|', ('company_id', '=', False), ('company_id', '=', company_id)]</attribute>
            </xpath>
            <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_create': True,'no_create_edit':True}</attribute>
                <attribute name="string">Variant</attribute>
            </xpath>

            <xpath expr='//page[@name="components"]' position="before">
                <page name="finished_goods" string="Finished Goods" attrs="{'invisible': [('finished_type', '!=', 'multi')]}">
                    <field name="finished_ids">
                        <tree string="Finished Goods" editable="bottom" trash-icon="$is_mandatory === false">
                            <field name="product_tmpl_id"/>
                            <field name="product_id"/>
                            <field name="product_qty"/>
                            <field name="product_uom_id"/>
                            <field name="is_mandatory" invisible="1"/>
                            <field name="product_uom_category_id" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                        </tree>
                    </field>
                </page>
                <xpath expr="//page[@name='operations']" position="move"/>
            </xpath>

            <xpath expr="//page[@name='operations']" position="attributes">
                <attribute name="attrs">{'invisible': [('use_operations', '=', False)]}</attribute>
            </xpath>

            <xpath expr="//field[@name='operation_ids']" position="attributes">
                <attribute name="context">{'default_time_mode': 'auto', 'default_branch_id': branch_id}</attribute>
            </xpath>

            <xpath expr="//field[@name='bom_line_ids']/tree/field[@name='product_id']" position="after">
                <field name="alternative_component_ids" string="Alternative Material" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}"/>
            </xpath>

            <xpath expr="//field[@name='bom_line_ids']/tree/field[@name='operation_id']" position="before">
                <field name="operation_two_ids" widget="many2many_tags" invisible="1"/>
                <field name="operation_two_id" string="Consumed In Operation" options="{'no_create': True, 'no_create_edit': True}" attrs="{'column_invisible': [('parent.equip_bom_type', '!=', 'mrp')], 'required': [('parent.equip_bom_type', '=', 'mrp')]}"/>
            </xpath>

            <xpath expr="//field[@name='bom_line_ids']/tree/field[@name='operation_id']" position="attributes">
                <attribute name="string">Consumed In Operation Original</attribute>
                <attribute name="invisible">0</attribute>
                <attribute name="optional">hide</attribute>
                <attribute name="readonly">1</attribute>
                <attribute name="force_save">1</attribute>
            </xpath>

            <xpath expr="//field[@name='byproduct_ids']/tree/field[@name='operation_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='byproduct_ids']/tree/field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
            </xpath>
            <xpath expr="//field[@name='byproduct_ids']/tree/field[@name='product_uom_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
            </xpath>

            <xpath expr="//field[@name='picking_type_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='bom_line_ids']/parent::page" position="attributes">
                <attribute name="string">Materials</attribute>
            </xpath>

            <xpath expr="//field[@name='bom_line_ids']/tree/field[@name='product_id']" position="attributes">
                <attribute name="string">Material</attribute>
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
            </xpath>
            <xpath expr="//field[@name='type']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='code']" position="attributes">
                <attribute name="required">1</attribute>
                <attribute name="string">BoM Name</attribute>
            </xpath>

            <xpath expr="//div[hasclass('o_row')]" position="after">
                <xpath expr="//field[@name='code']" position="move"/>
            </xpath>

            <xpath expr="//field[@name='create_uid']" position="after">
                <xpath expr="//label[@for='sh_bom_barcode_mobile']" position="move"/>
                <xpath expr="//div[@name='barcode_scanner_division']" position="move"/>
            </xpath>

            <xpath expr="//field[@name='ready_to_produce']" position="after">
                <field name="operation_start_mode" widget="radio"/>
            </xpath>

            <xpath expr="//field[@name='code']" position="after">
                <field name="rejected_product_id" required="1"/>
            </xpath>

            <!-- <xpath expr="//p[hasclass('oe_edit_only')]" position="replace"/> -->
            <xpath expr="//page[@name='components']" position="after">
                <page name="tools" string="Tools" attrs="{'invisible': [('bom_tools', '=', False)]}">
                    <field name="tool_ids">
                        <tree string="Tools" editable="bottom">
                            <field name="bom_id" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="product_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="quantity"/>
                            <field name="uom_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="operation_two_ids" widget="many2many_tags" invisible="1"/>
                            <field name="operation_two_id" string="Used in Operation" options="{'no_create': True, 'no_create_edit': True}"  attrs="{'column_invisible': [('parent.equip_bom_type', '!=', 'mrp')], 'required': [('parent.equip_bom_type', '=', 'mrp')]}"/>
                            <field name="allowed_operation_ids" widget="many2many_tags" invisible="1"/>
                            <field name="operation_id" string="Used In Operation Original" optional="hide" readonly="1" force_save="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="mrp_bom_tree_view_inherit" model="ir.ui.view">
        <field name="name">bills.of.materials.form.inherit</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='code']" position="after">
                <xpath expr="//field[@name='product_tmpl_id']" position="move"/>
            </xpath>
        </field>
    </record>

    <record id="view_mrp_bom_filter" model="ir.ui.view">
        <field name="name">mrp.bom.select</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.view_mrp_bom_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='phantom']" position="after">
                <filter name="multi_level_bom" string="Multi Level BoM" domain="[('bom_line_ids.product_id.has_bom', '=', True)]"/>
            </xpath>
        </field>
    </record>

    <record id="mrp_bom_line_view_form" model="ir.ui.view">
        <field name="name">mrp.bom.line.view.form.manuf</field>
        <field name="model">mrp.bom.line</field>
        <field name="inherit_id" ref="mrp.mrp_bom_line_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="branch_id" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="action_repair_operations" model="ir.actions.server">
        <field name="name">Repair Operations</field>
        <field name="model_id" ref="mrp.model_mrp_bom"/>
        <field name="binding_model_id" ref="mrp.model_mrp_bom"/>
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">
for rec in records:
    rec._set_operations()
        </field>
    </record>

    <record id="mrp.mrp_bom_form_action" model="ir.actions.act_window">
        <field name="domain">[('equip_bom_type', '=', 'mrp')]</field>
        <field name="context">{'default_company_id': allowed_company_ids[0], 'default_equip_bom_type': 'mrp'}</field>
    </record>

    <record id="mrp_bom_form_action_view_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="mrp.mrp_bom_tree_view"/>
        <field name="act_window_id" ref="mrp.mrp_bom_form_action"/>
    </record>

    <record id="mrp_bom_form_action_view_kanban" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="mrp.mrp_bom_kanban_view"/>
        <field name="act_window_id" ref="mrp.mrp_bom_form_action"/>
    </record>

    <record id="mrp_bom_form_action_view_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="3"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="mrp_bom_form_view"/>
        <field name="act_window_id" ref="mrp.mrp_bom_form_action"/>
    </record>

</odoo>