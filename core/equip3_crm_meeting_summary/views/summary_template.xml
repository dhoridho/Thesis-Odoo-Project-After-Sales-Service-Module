<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- summary.template search view -->
        <record id="summary_template_view_search" model="ir.ui.view">
            <field name="name">summary.template.view.search</field>
            <field name="model">summary.template</field>
            <field name="arch" type="xml">
                <search string="">
                    <!-- Add your fields here -->
                    <field name="name"/>
                </search>
            </field>
        </record>
        <!-- summary.template tree view -->
        <record id="summary_template_view_tree" model="ir.ui.view">
            <field name="name">summary.template.view.tree</field>
            <field name="model">summary.template</field>
            <field name="arch" type="xml">
                <tree>
                    <!-- Add your fields here -->
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <!-- summary.template form view -->
        <record id="summary_template_view_form" model="ir.ui.view">
            <field name="name">summary.template.view.form</field>
            <field name="model">summary.template</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <!-- Add your fields here -->
                            <field name="name"/>
                        </group>
                        <notebook>
                            <page name="line_ids" string="Questions">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="min_char"/>
                                        <field name="is_required"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- summary.template action window -->
        <record id="summary_template_action" model="ir.actions.act_window">
            <field name="name">Summary Template</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">summary.template</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p><p>
                    <!-- More details about what a user can do with this object will be OK --> 
                </p>
            </field>
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="summary_template_menu_act" name="Summary Template" parent="equip3_crm_masterdata.crm_meeting_config_menu_categ" action="summary_template_action" sequence="10"/>
    </data>
</odoo>