<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="calendar_meeting_summary_view_form" model="ir.ui.view">
        <field name="name">calendar.meeting.summary.form</field>
        <field name="model">calendar.meeting.summary</field>
        <field name="arch" type="xml">
            <form string="Meeting Summary">
                <sheet>
                    <group>
                        <group>
                            <field name="title" required="1"/>
                            <field name="user_id" readonly="1" force_save="1"/>
                            <field name="editor_ids" widget="many2many_tags" />
                        </group>
                        <group>
                            <field name="viewer_ids" widget="many2many_tags" />
                            <field name="tags_ids" widget="many2many_tags" />
                            <field name="calendar_events_id" />
                            <field name="summary_type" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="summary" attrs="{'invisible':[('summary_type','!=','one')],'required':[('summary_type','=','one')]}"/>
                    </group>
                    <notebook>
                        <page name="question_ids" string="Summary" attrs="{'invisible':[('summary_type','!=','questions')],'required':[('summary_type','=','questions')]}">
                            <field name="question_ids">
                                <tree create="false" delete="false">
                                    <field name="questions" force_save="1"/>
                                    <field name="answer"/>
                                    <field name="min_char" force_save="1"/>
                                    <field name="is_required" force_save="1"/>
                                    <field name="is_invalid" invisible="1" force_save="1"/>
                                </tree>
                                <form create="false" delete="false">
                                    <group>
                                        <field name="meeting_summary_id" invisible="1"/>
                                        <field name="questions" force_save="1"/>
                                        <field name="min_char" force_save="1"/>
                                        <field name="is_required" force_save="1"/>
                                        <field name="answer" attrs="{'required':[('is_required','=',True)]}"/>
                                        <field name="is_invalid" invisible="1" force_save="1"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="calendar_meeting_summary_tree_form" model="ir.ui.view">
        <field name="name">calendar.meeting.summary.tree</field>
        <field name="model">calendar.meeting.summary</field>
        <field name="arch" type="xml">
            <tree string="Meeting Summary">
                <field name="create_date" string="Date Created"/>
                <field name="title"/>
                <field name="tags_ids" widget="many2many_tags"/>
                <field name="editor_ids" widget="many2many_tags"/>
                <field name="viewer_ids" widget="many2many_tags"/>
                <field name="user_id" />
            </tree>
        </field>
    </record>

    <record id="calendar_meeting_summary_act_window" model="ir.actions.act_window">
        <field name="name">Meeting Summary</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">calendar.meeting.summary</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Meeting Summary.
            </p>
        </field>
    </record>

</odoo>