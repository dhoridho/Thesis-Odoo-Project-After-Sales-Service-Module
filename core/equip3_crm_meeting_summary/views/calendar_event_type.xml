<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- calendar.event.type inherit tree view -->
        <record id="inherit_view_calendar_event_type_tree" model="ir.ui.view">
            <field name="name">calendar.event.type.inherit.view.tree</field>
            <field name="model">calendar.event.type</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_type_tree"/>
            <field name="arch" type="xml">
                <!-- Add your xpath here -->
                <xpath expr="//tree" position="attributes">
                    <!-- Add your fields here -->
                    <attribute name="editable"></attribute>
                </xpath>
            </field>
        </record>

        <!-- calendar.event.type form view -->
        <record id="calendar_event_type_view_form" model="ir.ui.view">
            <field name="name">calendar.event.type.view.form</field>
            <field name="model">calendar.event.type</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="leads_meeting"/>
                                <field name="is_meeting_summary_required"/>
                                <field name="summary_template_id" attrs="{'invisible':[('is_hide_template','=',True)]}"/>
                                <field name="is_hide_template" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>