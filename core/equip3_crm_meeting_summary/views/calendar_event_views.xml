<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="calendar_event_form_inherit" model="ir.ui.view">
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_form" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_open_calendar_event']" position="before">
                <button name="action_open_calendar_meeting" type="object" class="oe_stat_button" icon="fa-calendar">
                    <field name="summary_count" widget="statinfo" string="Meeting Summary"/>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
