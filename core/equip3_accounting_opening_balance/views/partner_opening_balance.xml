<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_partner_opening_balance_tree" model="ir.ui.view">
            <field name="name">partner.opening.balance.tree</field>
            <field name="model">partner.opening.balance</field>
            <field name="arch" type="xml">
                <tree string="Generate Parter Opening Balance">
                    <field name="partner_id"/>
                    <field name="account_receivable_id"/>
                    <field name="account_payable_id"/>
                </tree>
            </field>
        </record>

        <record id="view_partner_opening_balance_form" model="ir.ui.view">
            <field name="name">partner.opening.balance.form</field>
            <field name="model">partner.opening.balance</field>
            <field name="arch" type="xml">
                <form string="Generate Parter Opening Balance">
                    <sheet>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="account_receivable_id"/>
                                <field name="account_payable_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="payable_opening_balance_line" string="Payable Opening Balance’s Line">
                                <field name="payable_opening_balance_ids" nolabel="1">
                                    <tree editable="top">
                                        <field name="vendor_id"/>
                                        <field name="invoice"/>
                                        <field name="date"/>
                                        <field name="description"/>
                                        <field name="due_date"/>
                                        <field name="amount_due"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="receivable_opening_balance_line" string="Receivable Opening Balance’s Line">
                                <field name="receivable_opening_balance_ids" nolabel="1">
                                    <tree editable="top">
                                        <field name="customer_id"/>
                                        <field name="purchase_order"/>
                                        <field name="date"/>
                                        <field name="description"/>
                                        <field name="due_date"/>
                                        <field name="amount_due"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="generate_partner_opening_balance_action">
            <field name="name">Generate Partner Opening Balance</field>
            <field name="res_model">partner.opening.balance</field>
            <field name="view_mode">tree,form</field>
            <field name="type">ir.actions.act_window</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Record Found
                </p>
                <p>
                    Click to Generate Partner Opening Balance.
                </p>
            </field>
        </record>

        <menuitem name="Generate Partner Opening Balance"
                  action="generate_partner_opening_balance_action"
                  id="menu_generate_partner_opening_balance"
                  parent="account.menu_finance_entries_generate_entries"
        />
    </data>
</odoo>