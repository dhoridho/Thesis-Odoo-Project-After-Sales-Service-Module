        <record id="action_view_incident_reports_employee_menu_tree" model="ir.actions.act_window">
            <field name="name">Employee Incident Reports</field>
            <field name="res_model">incident.report.employee</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'default_death_report': False}</field>
            <field name="domain">[('death_report', '=', False)]</field>
            <field name="view_ids" eval="[
                (5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('incident_reports_employee_view_tree')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                </p>
            </field>
        </record>

        <record id="action_view_death_reports_employee_menu_tree" model="ir.actions.act_window">
            <field name="name">Employee Death Reports</field>
            <field name="res_model">incident.report.employee</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'default_death_report': True}</field>
            <field name="domain">[('death_report', '=', True)]</field>
            <field name="view_ids" eval="[
                (5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('death_reports_employee_view_tree')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                </p>
            </field>
        </record>

        <!-- Menu Configuration -->
        <menuitem id="hse_operations_menu"
            name = "Operations"
            parent="equip3_hse_masterdata.human_safety_environment_main"
            sequence="1"
        />

        <menuitem id="hse_incidents_menu"
            name = "Incident Reports"
            parent="equip3_hse_operation.hse_operations_menu"
            sequence="1"
        />

        <menuitem id="incident_reports_employee_menu"
                  name="Employee Incident Reports"
                  parent="equip3_hse_operation.hse_incidents_menu"
                  action="action_view_incident_reports_employee_menu_tree"
                  sequence="2"/>

        <menuitem id="death_reports_employee_menu"
                  name="Employee Death Reports"
                  parent="equip3_hse_operation.hse_operations_menu"
                  action="action_view_death_reports_employee_menu_tree"
                  sequence="2"/>
    </data>
</odoo>