<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="incident_reports_employee_view_tree" model="ir.ui.view">
            <field name="name">incident.report.employee.view.tree</field>
            <field name="model">incident.report.employee</field>
            <field name="arch" type="xml">
                <tree multi_edit="1" sample="1">
                    <field name="name"/>
                    <field name="employee_id" string="Employee" class="font-weight-bold" />
                    <field name="incident_category_id"/>
                    <field name="description"/>
                    <field name="date_of_accident"/>
                    <field name="state" widget="badge"/>
                </tree>
            </field>
        </record>

        <record id="death_reports_employee_view_tree" model="ir.ui.view">
            <field name="name">death.report.employee.view.tree</field>
            <field name="model">incident.report.employee</field>
            <field name="arch" type="xml">
                <tree multi_edit="1" sample="1">
                    <field name="name"/>
                    <field name="employee_id" string="Employee" class="font-weight-bold" />
                    <field name="incident_category_id" string="Incident Category to Cause Death"/>
                    <field name="description" string="Incident Description to Cause Death"/>
                    <field name="date_of_accident" string="Date of Death"/>
                    <field name="state" widget="badge"/>
                </tree>
            </field>
        </record>

        <!-- form view -->
        <record id="incident_reports_employee_view_form" model="ir.ui.view">
            <field name="name">incident.report.employee.view.form</field>
            <field name="model">incident.report.employee</field>
            <field name="arch" type="xml">
                <form string="Incident Report">
                    <header>
                        <button string="Need Investigation" name="investigation" type="object"
                                class="btn-primary" attrs="{'invisible': [('state', 'not in', ('draft'))]}"/>
                        <button string="Create Investigation Report" name="create_investigation" type="object"
                                class="btn-primary" attrs="{'invisible': [('state', 'not in', ('investigation'))]}"/>
                        <button string="Resolve" name="resolve" type="object"
                                class="btn-primary" attrs="{'invisible': [('state', 'in', ('resolve', 'unresolve'))]}"/>
                        <button string="Unresolve" name="unresolve" type="object"
                                class="btn-primary" attrs="{'invisible': [('state', 'in', ('resolve', 'unresolve'))]}"/>
                        <button string="Re-open Investigation" name="reinvestigate" type="object"
                                class="btn-secondary" attrs="{'invisible': [('state', 'in', ('draft', 'investigation'))]}"/>
                        <button string="Cancel Investigation" name="cancel_investigation" type="object"
                                class="btn-secondary" attrs="{'invisible': [('state', 'not in', ('investigation'))]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,investigation,resolve" readonly="1"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_investigation_report"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-list-alt"
                                    attrs="{'invisible': [('total_investigation_report', '=', 0)]}">
                                <field name="total_investigation_report" widget="statinfo"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" />
                            </h1>
                        </div>
                        <group name="employee_group">
                            <group name="employee_left">
                                <field name="multiple_incident_id" string='Multiple Incident' readonly='1' force_save='1' attrs="{'invisible': [('multiple_incident_id', '=', False)]}"/>
                                <field name="employee_id"/>
                                <field name="death_report" invisible="1"/>
                                <field name="type" invisible="1"/>
                                <field name="date_of_accident" attrs="{'invisible': [('death_report', '=', True)]}"/>
                                <field name="date_of_accident" string="Date of Death" attrs="{'invisible': [('death_report', '=', False)]}"/>
                                <field name="incident_category_id" attrs="{'invisible': [('death_report', '=', True)]}"/>
                                <field name="incident_category_id" string="Cause of Death Category" attrs="{'invisible': [('death_report', '=', False)]}"/>
                                <field name="description"/>
                            </group>
                            <group name="employee_right">
                                <field name="impact" attrs="{'required': [('death_report', '=', False)], 'invisible': [('death_report', '=', True)]}"/>
                                <field name="action"/>
                                <field name="emerg_notified" string='Notified to Emergency Contact'/>
                                <field name="company_id"/>
                                <field name="branch_id"/>
                                <field name="create_uid"/>
                                <field name="create_date" string="Creation Date"/>
                            </group>   
                        </group>
                        <!-- <group name="incident_group" string="Incidents" attrs="{'invisible': [('death_report', '=', True)]}">
                            <field name="date_of_accident"/>
                            <field name="incident_category_id"/>
                            <field name="description"/>
                            <field name="impact" attrs="{'required': [('death_report', '=', False)]}"/>
                            <field name="action"/>
                            <field name="emerg_notified"/>
                        </group>
                        <group name="death_group" string="Death Report" attrs="{'invisible': [('death_report', '=', False)]}">
                            <field name="date_of_accident" string="Date of Death"/>
                            <field name="incident_category_id" string="Cause of Death Category"/>
                            <field name="description" string="Cause of Death"/>
                            <field name="action"/>
                            <field name="emerg_notified"/>
                        </group> -->
                    </sheet>
                    <div class="oe_chatter" name="chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
    
