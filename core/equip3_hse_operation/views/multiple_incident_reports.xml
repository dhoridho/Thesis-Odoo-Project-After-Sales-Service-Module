<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="incident_reports_multiple_view_tree" model="ir.ui.view">
            <field name="name">incident.report.multiple.view.tree</field>
            <field name="model">incident.report.multiple</field>
            <field name="arch" type="xml">
                <tree multi_edit="1" sample="1">
                    <field name="name"/>
                    <field name="date_of_accident"/>
                    <field name="number_of_accident"/>
                    <field name="state" widget="badge"/>
                </tree>
            </field>
        </record>

        <!-- form view -->
        <record id="incident_reports_multiple_view_form" model="ir.ui.view">
            <field name="name">incident.report.multiple.view.form</field>
            <field name="model">incident.report.multiple</field>
            <field name="arch" type="xml">
                <form string="Incident Report">
                    <header>
                        <button string="Confirm" name="button_confirm" type="object"
                            class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <!-- <button string="Complete" name="button_complete" type="object"
                            class="btn-primary" attrs="{'invisible': [('state', '!=', 'confirm')]}"/> -->
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm" readonly="1"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" />
                            </h1>
                        </div>
                        <group name="incident_group">
                            <group name="incident_left">
                                <field name="date_of_accident"/>
                                <field name="number_of_accident" invisible="1"/>
                                <field name="incident_category_id"/>
                                <field name="description"/>
                            </group>
                            <group name="incident_right">
                                <field name="company_id"/>
                                <field name="branch_id"/>
                                <field name="create_uid"/>
                                <field name="create_date" string="Creation Date"/>
                            </group>   
                        </group>
                        <notebook>
                            <page name="incident_employee_reports" string="Incidents">
                                <field name="employee_incident_ids">
                                    <tree editable='bottom' >
                                        <control>
                                            <create name="add_incident_control" string="Add an incident"/>
                                        </control>
                                        <field name="date_of_accident" invisible="1"/>
                                        <field name="company_id" invisible="1"/>
                                        <field name="branch_id" invisible="1"/>
                                        <field name="employee_id"/>
                                        <field name="incident_category_id" invisible="1"/>
                                        <field name="description" invisible="1"/>
                                        <field name="death_report"/>
                                        <field name="impact" attrs="{'required': [('death_report', '=', False)]}"/>
                                        <field name="action"/>
                                        <field name="emerg_notified"/>
                                        <field name="state"/>
                                        <button string="Need Investigation" name="investigation" type="object"
                                                class="btn-primary" attrs="{'invisible': ['|', ('state', 'not in', ('draft')), ('parent.state', '=', 'draft')]}"/>
                                        <button string="Create Investigation Report" name="create_investigation" type="object"
                                                class="btn-primary" attrs="{'invisible': ['|', ('state', 'not in', ('investigation')), ('parent.state', '=', 'draft')]}"/>
                                        <button string="Resolve" name="resolve" type="object"
                                                class="btn-primary" attrs="{'invisible': ['|', ('state', 'in', ('resolve', 'unresolve')), ('parent.state', '=', 'draft')]}"/>
                                        <button string="Unresolve" name="unresolve" type="object"
                                                class="btn-primary" attrs="{'invisible': ['|', ('state', 'in', ('resolve', 'unresolve')), ('parent.state', '=', 'draft')]}"/>
                                        <button string="Re-open Investigation" name="reinvestigate" type="object"
                                                class="btn-secondary" attrs="{'invisible': ['|', ('state', 'in', ('draft', 'investigation')), ('parent.state', '=', 'draft')]}"/>
                                        <button string="Cancel Investigation" name="cancel_investigation" type="object"
                                                class="btn-secondary" attrs="{'invisible': ['|', ('state', 'not in', ('investigation')), ('parent.state', '=', 'draft')]}"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter" name="chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_view_incident_reports_multiple_menu_tree" model="ir.actions.act_window">
            <field name="name">Multiple Incident Reports</field>
            <field name="res_model">incident.report.multiple</field>
            <field name="view_mode">tree,form</field>
            <field name="context"></field>
            <field name="domain"></field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                </p>
            </field>
        </record>

        <!-- Menu Configuration -->        
        <menuitem id="incident_reports_multiple_menu"
                  name="Multiple Incident Reports"
                  parent="equip3_hse_operation.hse_incidents_menu"
                  action="action_view_incident_reports_multiple_menu_tree"
                  sequence="1"/>
    </data>
</odoo>