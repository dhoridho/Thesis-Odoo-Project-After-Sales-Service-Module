<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_checklist_view_tree" model="ir.ui.view">
            <field name="name">action.checklist.view.tree</field>
            <field name="model">action.checklist</field>
            <field name="arch" type="xml">
                <tree multi_edit="1" sample="1">
                    <field name="name"/>
                    <!-- <field name="multiple_incident_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/> -->
                    <field name="employee_incident_id"/>
                    <field name="investigation_report_id"/>
                    <field name="action_propose" force_save='1'/>
                     <field name="propose_by"/>
                    <field name="state" widget="badge"/>
                </tree>
            </field>
        </record>

        <!-- form view -->
        <record id="action_checklist_view_form" model="ir.ui.view">
            <field name="name">action.checklist.view.form</field>
            <field name="model">action.checklist</field>
            <field name="arch" type="xml">
                <form string="Action Checklist">
                    <header>
                        <button string="Propose Action" name="request_approval" type="object"
                                class="btn-primary" attrs="{'invisible': ['|', ('is_hse_action_approval_matrix', '=', False), ('state', 'not in', ('draft'))]}"/>
                        <button id='approve1' string="Take Action" name="btn_approve" type="object"
                                class="btn-primary" attrs="{'invisible': ['|', ('is_hse_action_approval_matrix', '=', True), ('state', 'not in', ('draft'))]}"/>
                        <!-- <button id='reject1' string="Reject Action" name="button_reject" type="object"
                                class="btn-primary" attrs="{'invisible': ['|', ('is_hse_action_approval_matrix', '=', True), ('state', 'not in', ('draft'))]}"/> -->
                        <button id='approve2' string="Take Action" name="btn_approve" type="object"
                                class="btn-primary" attrs="{'invisible': ['|', ('is_hse_action_approval_matrix', '=', False), ('state', 'not in', ('to_approve'))]}"/>
                        <button id='reject1' string="Reject Action" name="button_reject" type="object"
                                class="btn-primary" attrs="{'invisible': ['|', ('is_hse_action_approval_matrix', '=', False), ('state', 'not in', ('to_approve'))]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,taken" attrs="{'invisible': ['|', ('is_hse_action_approval_matrix', '=', True), ('state', 'in', ('reject'))]}"/>
                        <field name="state1" widget="statusbar" statusbar_visible="draft,to_approve,taken" attrs="{'invisible': ['|', ('is_hse_action_approval_matrix', '=', False), ('state', 'in', ('reject'))]}"/>
                        <field name="state2" widget="statusbar" statusbar_visible="draft,reject" attrs="{'invisible': [('state', 'not in', ('reject'))]}"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" />
                            </h1>
                        </div>
                        <group name="action_checklist">
                            <group name="checklist_left">
                                <field name="employee_incident_id" required='1' domain="[('state','=','investigation')]" attrs="{'readonly': [('state', 'in', ['taken','to_approve','reject'])]}"/>
                                <field name="investigation_report_id" required='1' domain="[('employee_incident_id','=',employee_incident_id), ('state','in',('process','done'))]" attrs="{'readonly': [('state', 'in', ['taken','to_approve','reject'])]}"/>
                                <field name="action_propose" attrs="{'readonly': [('state', 'in', ['taken','to_approve','reject'])]}" force_save='1'/>
                                <field name="reason" attrs="{'invisible': [('reason', '=', False)], 'readonly': [('state', 'in', ['taken','to_approve','reject'])]}"/>
                            </group>
                            <group name="checklist_right">
                                <field name="propose_by"/>
                                <field name="company_id"/>
                                <field name="branch_id" required='1' attrs="{'readonly': [('state', 'in', ['taken','to_approve','reject'])]}"/>
                                <field name="create_uid"/>
                                <field name="create_date" string="Creation Date"/>
                                <field name="is_hse_action_approval_matrix" invisible='1'/>
                                <field name="approvers_ids" invisible='1'/>
                                <field name="approved_user_ids" invisible='1'/>
                                <field name="is_approver" invisible='1'/>
                                <field name="approved_user_text" invisible='1'/>
                                <field name="approved_user" invisible='1'/>
                                <field name="feedback_parent" invisible='1'/>
                                <field name="employee_id" invisible='1'/>
                                <field name="last_approved" invisible='1'/>
                            </group>
                        </group>
                        <notebook>
                            <page name="approval_matrix" string="Approval Matrix Line" attrs="{'invisible':[('is_hse_action_approval_matrix','!=',True)]}">
                                <group>
                                    <group>
                                        <field name="approving_matrix_action_checklist_id" readonly="1"/>
                                    </group>
                                </group>
                                <field name="action_checklist_user_ids" readonly="1" force_save="1">
                                    <tree editable="bottom" create="false" delete="false">
                                        <field name="name"/>
                                        <field name="user_ids" widget="many2many_tags" readonly="1" force_save="1"/>
                                        <field name="matrix_user_ids" widget="many2many_tags" invisible="1" readonly="1" force_save="1"/>
                                        <field name="is_delegation_mail_sent" invisible="1"/>
                                        <field name="minimum_approver" readonly="1" force_save="1"/>
                                        <field name="timestamp" invisible="1" force_save="1"/>
                                        <field name="approver_state" invisible="1" force_save="1"/>
                                        <field name="approval_status" readonly="1" force_save="1"/>
                                        <field name="approved_time" readonly="1" force_save="1"/>
                                        <field name="is_approve" invisible="1"/>
                                        <field name="approved_employee_ids" invisible="1"/>
                                        <field name="feedback" readonly="1" force_save="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter" name="chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
    
    
        <!-- action -->
        <record id="action_view_action_checklist_menu" model="ir.actions.act_window">
            <field name="name">Action Checklist</field>
            <field name="res_model">action.checklist</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_employee_incident_id' : 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                </p>
            </field>
        </record>

        <!-- Menu Configuration -->
        <menuitem id="action_checklist_menu"
                  name="Action Checklist"
                  parent="equip3_hse_operation.hse_operations_menu"
                  action="action_view_action_checklist_menu"
                  sequence="4"/>
    </data>
</odoo>