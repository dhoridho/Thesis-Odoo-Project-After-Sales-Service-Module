<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- approval.matrix.action.checklist form view -->
    <record id="view_form_approval_matrix_action_checklist" model="ir.ui.view">
        <field name="name">approval.matrix.action.checklist.form</field>
        <field name="model">approval.matrix.action.checklist</field>
        <field name="arch" type="xml">
            <form>
				<sheet>
                    <div class="oe_title pr-0">
                        <h1 class="d-flex flex-row justify-content-between">
                            <field name="name" placeholder="Approval Name" class="o_task_name text-truncate"/>
                        </h1>
                    </div>
					<group>
						<group>
                            <field name="company_id" force_save="1" />
							<field name="branch_id" required="1"/>
						</group>
						<group>
                            <field name="create_uid"/>
							<field name="create_date" string="Creation Date"/>
						</group>
					</group>
					<notebook>
						<page string="Approval Matrix">
							<field name="approval_matrix_ids" context="{'approval_matrix_ids' : approval_matrix_ids}">
                                <tree editable="bottom" class="class_container_approver_matrix">
                                    <field name="sequence" widget="handle" />
                                    <field name="sequence2" force_save="1" readonly="1" class="approver_matrix_sequence"/>
                                    <field name="approvers" widget="many2many_tags" required='1'/>
                                    <field name="minimum_approver" />
                                </tree>
                            </field>
						</page>
					</notebook>
				</sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
			</form>
        </field>
    </record>

    <!-- approval.matrix.action.checklist tree view -->
    <record id="view_tree_approval_matrix_action_checklist" model="ir.ui.view">
        <field name="name">approval.matrix.action.checklist.tree</field>
        <field name="model">approval.matrix.action.checklist</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" sample="1">
                <!-- Add your fields here -->
                <field name ="name"/>
				<field name="branch_id"/>
				<field name="company_id"/>
            </tree>
        </field>
    </record>

    <!-- approval.matrix.action.checklist action window -->
    <record id="action_approval_matrix_action_checklist" model="ir.actions.act_window">
        <field name="name">Action Checklist Approval Matrix</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">approval.matrix.action.checklist</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Approval Matrix found, Let's create one!
            </p>
        </field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem 
        id="approval_matrix_action_checklist_configuration_menu" 
        name="Action Checklist Approval Matrix" 
        parent="equip3_hse_masterdata.hse_configuration_menu"
        action="action_approval_matrix_action_checklist" 
        sequence="2"/>
</odoo>