<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="employee_form_inherit_hse" model="ir.ui.view">
            <field name="name">employee.form.inherit.hse</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='personal_information']" position="after">
                    <page name="incident_page" string="Incident Reports">
                        <notebook name="incident_notebook">
                            <page name="incident" string="Incident Reports">
                                <group name="incident_report_group" sring="Incident Reports">
                                    <field name="incident_report_ids" widget="one2many_list" nolabel='1' readonly='1' force_save='1'>
                                        <tree editable='bottom'>
                                            <field name="name"/>
                                            <field name="employee_id" string="Employee" class="font-weight-bold" invisible='1'/>
                                            <field name="incident_category_id"/>
                                            <field name="description"/>
                                            <field name="death_report"/>
                                            <field name="date_of_accident"/>
                                            <field name="state" widget="badge"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                            <page name="safe_hour" string="Safe Hours">
                                <group name="safe_hour_group">
                                    <field name="compute_safe_hour" invisible="1"/>
                                    <field name="safe_hour" widget="safe_hour_timer"/>
                                    <notebook name="safe_hour_notebook" sring="Safe Hours History">
                                        <page name="safe_hour_history_report" string="Safe Hours History">
                                            <field name="safe_hour_history_ids" widget="one2many_list" nolabel='1' readonly='0' force_save='1'>
                                                <tree editable='bottom'>
                                                    <field name="no"/>
                                                    <field name="employee_id" string="Employee" invisible='1'/>
                                                    <field name="start_date"/>
                                                    <field name="end_date"/>
                                                    <field name="duration" string='Duration (Hours)'/>
                                                </tree>
                                            </field>
                                        </page>
                                    </notebook>
                                </group>
                            </page>
                        </notebook>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>