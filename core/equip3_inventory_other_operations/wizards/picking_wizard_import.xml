<odoo>
    <data>
        <!-- picking.wizard.import_view_form form view -->
        <record id="picking_wizard_import_view_form_view_form" model="ir.ui.view">
            <field name="name">picking.wizard.import.view.form</field>
            <field name="model">picking.wizard.import</field>
            <field name="arch" type="xml">
                <form string="Picking Import">
                    <sheet>
                        <group>
                            <div role="alert" style="margin-left: 10px; margin-top: 0px;">
                                <a href="/equip3_inventory_other_operations/static/sample/sample.csv" target="_blank">
                                    <strong>Import Template : CSV Template</strong>
                                </a>
                            </div>
                            <field name="file"/>
                        </group>
                        <footer>
                            <button name="import_csv_data" string="Import CSV" type="object" class="oe_highlight"/>
                            <button string="Cancel" class="oe_link" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="picking_wizard_import_action" model="ir.actions.act_window">
            <field name="name">Import Picking</field>
            <field name="res_model">picking.wizard.import</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


        <menuitem
                id="picking_wizard_import_action_menu_act"
                name="Import Picking"
                parent="equip3_inventory_operation.menu_operations_transfer_operations"
                action="picking_wizard_import_action"
                sequence="9"/>

    </data>
</odoo>
