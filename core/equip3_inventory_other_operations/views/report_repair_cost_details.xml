<?xml version="1.0" encoding="UTF-8"?>
<odoo>    
    <template id="report_cost_details_document">
        <div class="container o_repair_cost_report_page">
            <div class="row">
                <div class="col-lg-12">
                    <h1 style="margin-top:20px;"><b>Cost Details</b></h1>
                    <h1><b><span t-esc="data['product']"/></b></h1>
                    <h6>Reference: <span t-esc="data['reference']"></span></h6>
                </div>
            </div>
            <t t-set="currency" t-value="data['currency']"/>
            <div class="row">
                <div class="col-lg-12">
                    <div class="mt16">
                        <table width="100%" class="table table-hover" style="border-top: 1px solid black;border-bottom: 1px solid;">
                            <thead>
                                <tr style="border-top: 2px solid black;border-bottom: 2px solid;">
                                    <th style="border-top: 1px solid black;border-bottom: 1px solid;">Product</th>
                                    <th style="border-top: 1px solid black;border-bottom: 1px solid;" name="th_qty">Product Quantity</th>
                                    <th style="border-top: 1px solid black;border-bottom: 1px solid;" class="text-right">Consumed Quantity</th>
                                    <th style="border-top: 1px solid black;border-bottom: 1px solid;" class="text-right">Cost</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr style="border-top: 1px solid black;border-bottom: 1px solid;">
                                    <td style="border-top: 1px solid black;border-bottom: 1px solid;">
                                        <span><t t-esc="data['product']"/></span>
                                    </td>
                                    <td style="border-top: 1px solid black;border-bottom: 1px solid;" class="text-left">
                                        <span><t t-esc="data['product_qty']"/></span>
                                    </td>
                                    <td style="border-top: 1px solid black;border-bottom: 1px solid;"></td>
                                    <td style="border-top: 1px solid black;border-bottom: 1px solid;" class="text-right"><span><t t-esc="data['total']" t-options='{"widget": "monetary", "display_currency": currency}'/></span></td>
                                </tr>
                                <t t-set="line" t-value="data['lines']"/>
                                <t t-foreach="line" t-as="l">
                                    <tr style="border-top: 1px solid black;border-bottom: 1px solid;">
                                        <td style="border-top: 1px solid black;border-bottom: 1px solid;">
                                            <span style="margin-left: 25px;"><t t-esc="l['product_id']"/></span>
                                        </td>
                                        <td style="border-top: 1px solid black;border-bottom: 1px solid;"></td>
                                        <td style="border-top: 1px solid black;border-bottom: 1px solid;" class="text-right">
                                            <span><t t-esc="l['product_uom_qty']"/></span>
                                        </td>
                                        <td style="border-top: 1px solid black;border-bottom: 1px solid;" class="text-right"><span><t t-esc="l['price_subtotal']" t-options='{"widget": "monetary", "display_currency": currency}'/></span></td>
                                    </tr>
                                </t>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td></td>
                                    <td ><span><strong>Unit Cost</strong></span></td>
                                    <td></td>
                                    <td class="text-right"><span><t t-esc="data['total']" t-options='{"widget": "monetary", "display_currency": currency}'/></span></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </template>
    
    <template id="report_cost">
        <t t-set="data_report_landscape" t-value="True"/>
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="data">
                <div class="page">
                    <t t-call="equip3_inventory_other_operations.report_cost_details_document"/>
                </div>
                <p style="page-break-before:always;"> </p>
            </t>
        </t>
    </template>
</odoo>