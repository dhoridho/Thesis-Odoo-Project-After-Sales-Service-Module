<?xml version ="1.0" encoding="utf-8" ?>
<odoo>
    <record id="sh_purchase_config_purchase_revisions_form_inherit" model="ir.ui.view">
        <field name="name">purchase.config.credit.limit.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='purchase']//div[1]" position="after">
                <h2>Purchase Revisions</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="sh_purchase_revision" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_purchase_revision" />
                            <div class="text-muted">
                                Enable Purchase Revisions
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
