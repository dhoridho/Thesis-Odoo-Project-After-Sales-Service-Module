    <record id="product_bundle_product_form_view_page" model="ir.ui.view">
        <field name="name">product.template.pack</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="dynamic_product_bundle.product_bundle_product_form_view_page" />
        <field name="arch" type="xml">
            <!-- <xpath expr="//field[@name='bi_pack_ids']//tree//field[@name='bi_image']" position="after">
                <field name='bundling_qty' invisible="1"/>
            </xpath> -->
            <xpath expr="//field[@name='bi_pack_ids']//tree//field[@name='product_id']" position="after">
                <field name="product_template"/>
                <field name="domain_product_template" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='bi_pack_ids']//tree//field[@name='product_template']" position="attributes">
                <attribute name="domain">domain_product_template</attribute> 
            </xpath>
            <xpath expr="//field[@name='bi_pack_ids']//tree//field[@name='qty_uom']" position="after">
                <field name="proportion"/>
            </xpath>
            <xpath expr="//field[@name='bi_pack_ids']//tree//field[@name='product_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="inv_product_bundle_action" model="ir.actions.act_window">
        <field name="name">Product Bundling</field>
        <field name="res_model">product.template</field>
        <field name="domain">[('is_pack', '=', True)]</field>
        <field name="context">{'default_is_pack':True}</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="stock.product_template_kanban_stock_view"/>
    </record>

    <menuitem id="menu_product_bundle_inv" 
              name="Product Bundle" 
              action="inv_product_bundle_action" 
              parent="equip3_inventory_operation.menu_product_in_inventory_control" 
              sequence="3"/>


