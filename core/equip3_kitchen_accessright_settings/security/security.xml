<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.module.category" id="module_central_kitchen">
        <field name="name">Central Kitchen</field>
        <field name="sequence">10</field>
    </record>

    <record id="group_central_kitchen_is_a_chef" model="res.groups">
        <field name="name">Is a chef</field>
        <field name="category_id" ref="module_central_kitchen"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="group_central_kitchen_safety_stock" model="res.groups">
        <field name="name">Allow to manage safety stock</field>
        <field name="category_id" ref="module_central_kitchen"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="group_central_kitchen_outlet_order" model="res.groups">
        <field name="name">Allow to show outlet order</field>
        <field name="category_id" ref="module_central_kitchen"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="group_central_kitchen_byproducts" model="res.groups">
        <field name="name">Central Kitchen Produce residual products</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

</odoo>