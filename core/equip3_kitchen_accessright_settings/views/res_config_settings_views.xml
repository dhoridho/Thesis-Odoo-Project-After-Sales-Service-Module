<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.kitchen</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="equip3_general_setting.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='implementor_central_kitchen']" position="attributes">
                <attribute name="class">col-12 o_setting_box</attribute>
            </xpath>
            <xpath expr="//div[@id='implementor_central_kitchen']" position="after">
                <div class="col-6 o_setting_box" id="implementor_kitchen_left" attrs="{'invisible': [('central_kitchen', '=', False)]}">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane" style="padding-bottom: 15px;">
                        <div class="content-group">
                            <div class="col-12 o_setting_box" id="central_kitchen_byproduct" style="margin-top: 0; padding-left: 0;" title="Add by-products to bills of materials. This can be used to get several finished products as well. Without this option you only do: A + B = C. With the option: A + B = C + D.">
                                <div class="o_setting_left_pane">
                                    <field name="group_central_kitchen_byproducts"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="group_central_kitchen_byproducts" string="By-Products"/>
                                    <div class="text-muted">
                                        Produce residual products (A + B -> C + D)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
