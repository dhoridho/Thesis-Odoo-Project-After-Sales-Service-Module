<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="accoun_registration_view_form" model="ir.ui.view">
            <field name="name">privy.account.registration.registration.view.form</field>
            <field name="model">privy.account.registration</field>
            <field name="arch" type="xml">
                <form >
                    <header>
                        <button string="Check Status" type="object" name="check_status" class="oe_highlight" attrs="{'invisible':[('status','=','Draft')]}"/>
                        <button string="Confirm" type="object" name="confirm" class="oe_highlight" attrs="{'invisible':[('status','!=','Draft')]}"/>
               
                    </header>
                    <sheet>
                        <group>
                            <group>

                            <field name="partner_id" attrs="{'readonly':[('status','!=','Draft')]}"/>
                            <field name="name" attrs="{'readonly':[('status','!=','Draft')]}" required="1"/>
                            <field name="email" attrs="{'readonly':[('status','!=','Draft')]}" required="1"/>
                            <field name="mobile" attrs="{'readonly':[('status','!=','Draft')]}" required="1"/>
                            <field name="status" readonly="1" force_save="1" />
                            <field name="privy_id" string="Privy ID" readonly="1" force_save="1"/>
                            <field name="reference_number"  readonly="1" force_save="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>

    <record id="privy_account_registration_view_tree" model="ir.ui.view">
        <field name="name">privy.account.registration.view.tree</field>
        <field name="model">privy.account.registration</field>
        <field name="arch" type="xml">
            <tree string="Account Registration">
                <field name="privy_id" string="Privy ID"/>
                <field name="name" />
                <field name="email" />
                <field name="mobile" />
                <field name="registered_date" />
                <field name="status" />
                <button string="Check Status" type="object" name="check_status" class="oe_highlight" attrs="{'invisible':[('status','=','Draft')]}"/>

                
            </tree>
        </field>
    </record>
    <record id="privy_account_registration_action" model="ir.actions.act_window">
        <field name="name">Account Registration</field>
        <field name="res_model">privy.account.registration</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <menuitem
        id="privy_general_menu"
        name="Privy"
        sequence="10"
        parent="base.menu_administration"
        />

    <menuitem
        id="privy_account_registration_general_menu"
        name="Account Registration"
        sequence="1"
        parent="privy_general_menu"
        action="privy_account_registration_action"
        />
    

</odoo>
