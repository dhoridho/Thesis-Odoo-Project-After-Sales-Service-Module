<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_partner_privy_inherit_form" model="ir.ui.view">
            <field name="name">res.partner.privy.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook[last()]" position="inside">
                    <page string="Privy Account" name="privy_account">
                        <group name="privy_id" >
                            <group >        
                                <field name="privy_user_name" string="Privy ID"/>
                                <span> If you don't have Privy Account, please register here!</span>
                                <br/>
                                <button
                                string="Register"
                                class="btn-primary"
                                name="register_privy"
                                type="object"
                                />
                            </group>

                            
                        </group>
                        <notebook>
                            <page name="registration_history" string="Registration History">
                                <field name="privy_history_ids" >
                                    <tree create="0" edit="0" delete="0">
                                        <field name="name" />
                                        <field name="email" />
                                        <field name="mobile" />
                                        <field name="registered_date" />
                                        <field name="status" />
                                        <button
                                        string="Check Status"
                                        name="check_status"
                                        class="btn-primary"
                                        type="object"
                                        />
                                    </tree>
                                </field>
                                
                            </page>
                        </notebook>

                        
