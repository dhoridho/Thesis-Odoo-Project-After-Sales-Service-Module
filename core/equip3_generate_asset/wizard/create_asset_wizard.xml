<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="equip3_create_asset_wizard_view_form" model="ir.ui.view">
        <field name="name">equip3.create.asset.wizard.view.form</field>
        <field name="model">create.asset.wizard</field>
        <field name="inherit_id" ref="equip3_asset_fms_operation_cont.create_asset_wizard_view_form" />
        <field name="type">form</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='create_asset_ids']/tree/field[@name='product_id']" position="attributes">
                <attribute name="force_save">1</attribute>
            </xpath>
            <xpath expr="//field[@name='create_asset_ids']/form/group/group/field[@name='product_id']" position="attributes">
                <attribute name="force_save">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>