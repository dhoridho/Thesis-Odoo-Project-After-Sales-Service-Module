<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="equip3_generate_asset_wizard_view" model="ir.ui.view">
            <field name="name">Generate Assets</field>
            <field name="model">rental.generate.asset.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="generate_all_asset"/>
                        <field name="asset_ids" attrs="{'invisible': [('generate_all_asset', '=', True)]}">
                            <tree create="0" edit="0">
                                <field name="name" />
                                <field name="default_code" />
                                <field name="responsible_id" />
                                <field name="list_price" />
                                <field name="standard_price" />
                                <field name="last_purchase_price" />
                                <field name="qty_available" />
                                <field name="virtual_available" />
                                <field name="uom_id" />
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button name="generate_asset"
                                string="Generate"
                                type="object"
                                class="btn-primary"/>
                        <button string="Cancel"
                                class="btn-default"
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_equip3_generate_asset_wizard" model="ir.actions.act_window">
            <field name="name">Generate Assets</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">rental.generate.asset.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem name="Generate Assets" id="equip3_generate_asset_wizard_menu"
                  parent="maintenance.menu_maintenance_configuration"
                  action="action_view_equip3_generate_asset_wizard"
                  sequence="1"/>

    </data>
</odoo>
