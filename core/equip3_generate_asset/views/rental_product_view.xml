<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="rental_products_template_form_view" model="ir.ui.view">
        <field name="name">rental.product.template.form.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="type">form</field>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="get_asset_depreciation" class="oe_stat_button" icon="fa-list" attrs="{'invisible': [('type', '!=', 'asset')]}" string="Asset Depreciation" type="object" />
                <button name="get_asset_control" class="oe_stat_button" icon="fa-list" attrs="{'invisible': [('type', '!=', 'asset')]}" string="Asset Control" type="object" />
            </div>
        </field>
    </record>
</odoo>