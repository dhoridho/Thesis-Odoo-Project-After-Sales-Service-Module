<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="maintenance_so_cust_wizard_form_view" model="ir.ui.view">
            <field name="name">maintenance.saleorder.wizard.custom.form</field>
            <field name="model">maintenance.saleorder.wizard.custom</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <p>This wizard will create sale quotation from maintenace request.</p>
                    </group>
                    <footer>
                        <button string="Create" name="create_mainteance_saleorder" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="maintenace_so_cust_wizard_action" model="ir.actions.act_window">
            <field name="name">Create Sale Quotation From Maintenance Request</field>
            <field name="res_model">maintenance.saleorder.wizard.custom</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
