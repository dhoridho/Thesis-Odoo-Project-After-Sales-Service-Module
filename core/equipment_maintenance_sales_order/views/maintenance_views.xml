<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
       <record id="hr_equipment_request_view_form_inherit_customsaleorder" model="ir.ui.view">
            <field name="name">maintenance.request.form.inherit</field>
            <field name="model">maintenance.request</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form"/>
            <field name="arch" type="xml">
               <xpath expr="//header" position="inside">
                    <button string="Create Sales Quotation" name="%(maintenace_so_cust_wizard_action)d" type="action" class="oe_highlight" />
               </xpath>
                <xpath expr="//div[@class='oe_right']" position="before">
                    <div class="oe_button_box" name="button_box">
                        <button name="show_quotation" string="Sales Order" type="object" class="oe_stat_button" icon="fa-usd"  widget="statinfo" >
                        </button>
                    </div>
               </xpath>
               <xpath expr="//field[@name='maintenance_team_id']" position="after">
                    <field name='partner_custom_id'/>
               </xpath>
               <xpath expr="//form/sheet" position="inside">
                    <notebook>
                        <page string="Quotation Product Lines" name="quotation_product_lines">
                            <field name="maintenance_requestcustom_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="notes"/>
                                    <field name="qty"/>
                                    <field name="product_uom"/>
                                    <field name="price"/>
                                    <field name="is_so_line_created"/>
                                    <field name="maint_request_custom_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
