<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="xendit_form">
        <input type="hidden" name="data_set" t-att-data-action-url="invoice_url" data-remove-me=""/>
    </template>

    <record id="acquirer_form_xendit" model="ir.ui.view">
        <field name="name">payment.acquirer.form.inherit</field>
        <field name="model">payment.acquirer</field>
        <field name="inherit_id" ref="payment.acquirer_form"/>
        <field name="arch" type="xml">
            <xpath expr='//group[@name="acquirer"]' position='inside'>
                <group attrs="{'invisible': [('provider', '!=', 'xendit')]}">
                    <field name="xendit_secret_key" attrs="{'required':[ ('provider', '=', 'xendit'), ('state', '!=', 'disabled')]}" password="True"/>
                    <field name="xendit_verification_token" attrs="{'required':[ ('provider', '=', 'xendit'), ('state', '!=', 'disabled')]}" password="True"/>
                </group>
            </xpath>
            <xpath expr='//group[@name="acquirer_config"]' position='after'>
                <group attrs="{'invisible': [('provider', '!=', 'xendit')]}">
                    <field name="xendit_image_url"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
