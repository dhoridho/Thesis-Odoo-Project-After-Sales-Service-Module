<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="payment_acquirer_xendit_payment" model="payment.acquirer">
            <field name="name">Xendit</field>
            <field name="display_as">Xendit Payment</field>
            <field name="image_128" type="base64" file="payment_xendit/static/src/img/xendit-logo.svg"/>
            <field name="company_id" ref="base.main_company"/>
            <field name="view_template_id" ref="xendit_form"/>
            <field name="provider">xendit</field>
            <field name="done_msg" type="html"><p>Your payment has been received and will be processed within the next 30 minutes. Thank you!</p></field>
            <field name="description" type="html">
                <p>
                    A payment gateway to accept online payments via credit cards.
                </p>
                <ul class="list-inline">
                    <li class="list-inline-item"><i class="fa fa-check"/>Online Payment</li>
                    <li class="list-inline-item"><i class="fa fa-check"/>Payment Status Tracking</li>
                    <li class="list-inline-item"><i class="fa fa-check"/>Subscriptions</li>
                    <li class="list-inline-item"><i class="fa fa-check"/>Save Cards</li>
                </ul>
            </field>
            <field name="payment_icon_ids" eval='[(6, 0, [ref("payment.payment_icon_cc_visa"),
                                                            ref("payment.payment_icon_cc_mastercard"),
                                                            ref("payment.payment_icon_cc_jcb"),
                                                            ref("payment_xendit.payment_icon_bank_bca"),
                                                            ref("payment_xendit.payment_icon_bank_bri"),
                                                            ref("payment_xendit.payment_icon_bank_bni"),
                                                            ref("payment_xendit.payment_icon_bank_permata"),
                                                            ref("payment_xendit.payment_icon_bank_mandiri"),])]'/>
        </record>
    </data>
</odoo>
