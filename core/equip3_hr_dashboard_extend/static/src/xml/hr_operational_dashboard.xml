<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="hr_operational_dashboard_configuration_action">
        <div class="elearning_flow_action">
            <div class="elearning_flow_action_content d-flex flex-column">
                <div class="content-header">
                    <div class="d-flex p-3 w-100">
                        <span>HR Operational Dashboard</span>
                    </div>
                </div>

                <div class="col-12" id="attendance_dashboard" style="margin-top: 15px;">
                    <div class="col-12" style="padding: unset !important;background: white; text-align: center; min-width: 32%;">
                        <div style="border: 1px solid #cccccc; box-shadow: 3px 3px 10px 0 rgb(209 196 233 / 50%); border-radius: 5px; min-height: 28%;">
                            <div class="panel panel-default" style="display: flex;">
                                <style>
                                    .btn-filter {
                                        margin: 5px;
                                        border-radius: 20px !important;
                                        border: 1px solid black;
                                        min-width: 100px;
                                        padding: 0;
                                    }
                                    #attendance_filter_dropdown {
                                        border: 1px solid #ccc !important;
                                        color: #787373 !important;
                                        box-shadow: none !important;
                                        background-color: transparent !important;
                                        border-radius: 7px !important;
                                        height: 35px;
                                        display: flex;
                                        align-items: center;
                                        margin-right: 3%;
                                    }
                                    .search-container {
                                        display: flex; 
                                        border: 1px solid #ccc; 
                                        padding: 5px; 
                                        border-radius: 10px;
                                        margin-right: 3%;
                                        width:60%;
                                    }
                                    #attendance_table {
                                        width: 100%; 
                                    }
                                    .label-text {
                                        font-size: 14px;
                                    }
                                    .checkbox-item {
                                        width: 20px;
                                        margin-right: 5px;
                                    }
                                    #dropdown_attendance {
                                        padding: 5%;
                                        position: absolute;
                                        top: -33%;
                                        left: -74%;
                                    }
                                </style>
                     
                                <div class="panel-body panel-body-graph col-12" style="padding-top:10px; margin:1% 0 2% 0">
                                    <div class="row" style="padding-left:5%;">
                                        <h1 style="margin-right:5%; color:#787373 !important">Attendance</h1>

                                        <div class="search-container">
                                            <i class="fa fa-search" style="margin:auto; margin-right:5px;"></i>
                                            <input type="text" id="attendance_search" class="search-box" placeholder="Search.." style="border:0;" />
                                        </div>

                                        <button id="attendance_filter_dropdown" class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown">
                                            <span style="display:flex; align-items:center; justify-content:center;">
                                                <i style="font-size:20px;" class="o-hm2-filters mr-2"></i>
                                            </span>
                                            Filters
                                        </button>

                                        <button id="btn_refresh" class="btn btn-primary" type="button">
                                            Refresh
                                        </button>

                                        <ul class="dropdown-menu">
                                            <li type="button" id="attendance_status_filter" data-toggle="dropdown" class="dropdown-item">
                                                <i class="fa fa-chevron-left mr-2"></i>
                                                <a>
                                                    Attendance Status
                                                </a>
                                                <ul id="dropdown_attendance" class="dropdown-ul dropdown-menu">
                                                    <li style="display:flex; margin-bottom:15px;">
                                                        <input type="checkbox" href="#" id="present" class="dropdown-item checkbox-item"><div class="label-text fa-lg">Present</div></input>
                                                    </li>
                                                    <li style="display:flex; margin-bottom:15px;">
                                                        <input type="checkbox" href="#" id="absent" class="dropdown-item checkbox-item" checked="1"><div class="label-text fa-lg">Absent</div></input>
                                                    </li>
                                                    <li style="display:flex; margin-bottom:15px;">
                                                        <input type="checkbox" href="#" id="leave" class="dropdown-item checkbox-item"><div class="label-text fa-lg">Leave</div></input>
                                                    </li>
                                                    <li style="display:flex;">
                                                        <input type="checkbox" href="#" id="travel" class="dropdown-item checkbox-item"><div class="label-text fa-lg">Travel</div></input>
                                                    </li>
                                                </ul>
                                            </li>
                                        </ul>
                                    </div>
                                    
                                    <div style="margin-top: 3%;">
                                        <table class="table o_table_list" id="attendance_table">
                                            <thead id="attendance_table_head" style="width:100%; background:#ccc;">
                                                <tr>
                                                    <td>
                                                        <span><strong>EMPLOYEE</strong></span>
                                                    </td>
                                                    <td>
                                                        <span><strong>EMPLOYEE ID</strong></span>
                                                    </td>
                                                    <td>
                                                        <span><strong>DEPARTMENT</strong></span>
                                                    </td>
                                                    <td>
                                                        <span><strong>ATTENDANCE STATUS</strong></span>
                                                    </td>
                                                    <td>
                                                        <span><strong>LEAVE TYPE</strong></span>
                                                    </td>
                                                    <td>
                                                        <span><strong>WORKING DATE</strong></span>
                                                    </td>
                                                    <td></td>
                                                </tr>
                                            </thead>
                                            <tbody id="attendance_table_body"></tbody>
                                        </table>
                                    </div>

                                    <div>
                                        <button id="btn_get_data" class="btn btn-primary" type="button">
                                            Get Data
                                        </button>
                                        <nav class="attendance-pagination" style="text-align:right;">
                                            <span>
                                                <button type="button" aria-label="Previous" title="Previous" tabindex="-1" class="fa fa-chevron-left btn btn-secondary o_pager_previous" accesskey="p"></button>
                                            </span>
                                            <span class="o_pager_counter">
                                                <input type="text" class="o_pager_value o_input" disabled="1" style="text-align:center; width:70px;" />
                                                <span> / </span>
                                                <span class="o_pager_limit"></span>
                                            </span>
                                            <span aria-atomic="true" class="btn-group">
                                                <button type="button" aria-label="Next" title="Next" tabindex="-1" class="fa fa-chevron-right btn btn-secondary o_pager_next" accesskey="n"></button>
                                            </span>
                                        </nav>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12" id="leaves_dashboard" style="margin-top: 15px;">
                    <div class="col-12" style="padding: unset !important;background: white; text-align: center; min-width: 32%;">
                        <div style="box-shadow: 3px 3px 10px 0 rgb(209 196 233 / 50%); border-radius: 5px; min-height: 28%;">
                            <div class="panel panel-default" style="display: flex;">
                                <style>
                                    .btn-filter {
                                        margin: 5px;
                                        border-radius: 20px !important;
                                        border: 1px solid black;
                                        min-width: 100px;
                                        padding: 0;
                                    }
                                </style>
                     
                                <div class="panel-body panel-body-graph col-12" style="padding-top: 10px; overflow: auto; height: 350px; margin: 1% 0 2% 0">
                                    <div class="row" style="padding-left: 5%;">
                                        <h1 style="margin-right: 5%;">Leaves</h1>

                                        <button class="btn btn-default dropdown-toggle btn-filter" id="btn_filter_graph_1" type="button" data-toggle="dropdown">
                                            Filter
                                        </button>

                                        <ul class="dropdown-menu">
                                            <li id="yearly_graph_1" class="graph_1">
                                                <a tabindex="-1" href="#" class="dropdown-menu-data dropdown-item" id="yearly">
                                                    Yearly
                                                </a>
                                            </li>
                                            <li type="button" class="dropdown-submenu dropdown-toggle dropdown-item">
                                                <a>
                                                    Quarterly
                                                </a>
                                                <ul class="dropdown-menu dropdown-ul" id="quarterly_filter_graph_1"></ul>
                                            </li>
                                            <li type="button" class="dropdown-submenu dropdown-toggle dropdown-item">
                                                <a>
                                                    Monthly
                                                </a>
                                                <ul class="dropdown-menu dropdown-ul" id="monthly_filter_graph_1"></ul>
                                            </li>
                                            <li type="button" class="dropdown-submenu dropdown-toggle dropdown-item">
                                                <a>
                                                    Days
                                                </a>
                                                <ul class="dropdown-menu dropdown-ul" id="days_filter_graph_1">
                                                    <li id="days_graph_1" class="graph_1">
                                                        <a tabindex="-1" href="#" id="last_7_days" class="dropdown-menu-data dropdown-item">
                                                            Last 7 Days
                                                        </a>
                                                    </li>
                                                    <li id="days_graph_1" class="graph_1">
                                                        <a tabindex="-1" href="#" id="next_7_days" class="dropdown-menu-data dropdown-item">
                                                            Next 7 Days
                                                        </a>
                                                    </li>
                                                </ul>
                                            </li>
                                        </ul>
                                    </div>
                                    
                                    <div style="margin-top: 3%;">
                                        <table class="table" id="overtime-table" style="width: 100%;">
                                            <thead id="leaves_table_head" style="width: 100%;">
                                                <tr style="width: 100%;" id="leaves_table_head_tr"></tr>
                                            </thead>
                                            <tbody id="leaves_table_body"></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>