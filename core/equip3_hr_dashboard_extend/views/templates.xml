<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="hr_dashboard_assets_backend" name="hr_dashboard_assets_backend" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
			<script type="text/javascript" src="/equip3_hr_dashboard_extend/static/src/js/hr_announcement_popup.js"></script>
            <script type="text/javascript" src="/equip3_hr_dashboard_extend/static/src/js/director_dashboard.js"/>
            <script type="text/javascript" src="/equip3_hr_dashboard_extend/static/src/js/chart.js"/>
            <script type="text/javascript" src="/equip3_hr_dashboard_extend/static/src/js/hr_operational_dashboard.js"/>
        </xpath>
	</template>

    <template id="hr_annoucements_data_tbl" name="hr Annoucements Data">

		<div class="announcement_container" id="js_id_hr_annoucement_data_tbl_div">

			<t t-set="count" t-value="1"/>
			<t t-if="annoucements">
				<t t-foreach="annoucements" t-as="annoucement">


					<t t-if="count == 1">
						<t t-set="count" t-value="0"/>
						<div class="main_annoucement">
							<div class="annoucement_info open-announce" t-att-data-id='annoucement.id' data-toggle="modal" data-target="#announcement_modal" style="cursor:pointer;">
								  <div class="annoucement_para"><t t-esc="annoucement.announcement_reason"/></div>
								  <div class="annoucement_date"><t t-esc="annoucement.date_start.strftime('%d/%m/%Y')"/></div>
							 </div>
	             		</div>
					</t>

					<t t-else="">
                        <div class="main_annoucement another_announce">
							 <div class="annoucement_info open-announce" t-att-data-id='annoucement.id' data-toggle="modal" data-target="#announcement_modal" style="cursor:pointer;">
								  <div class="annoucement_para"><t t-esc="annoucement.announcement_reason"/></div>
								  <div class="annoucement_date"><t t-esc="annoucement.date_start.strftime('%d/%m/%Y')"/></div>
							 </div>
						</div>
					</t>
				</t>
			</t>

			<!-- Modal Announcement-->
			<div id="announcement_modal" class="modal fade" role="dialog">
				<div class="modal-dialog">
					<!-- Modal content-->
					<div class="modal-content">
						<div class="modal-header" style="padding: 15px 15px !important;">
							<h4 class="modal-title text-left" style="margin: auto;"><span class="announce_name"/> / <span class="announce_start_date"/> - <span class="announce_end_date"/></h4>
							<button type="button" class="close" data-dismiss="modal" style="margin-left: 0px;color: red;">X</button>
						</div>
						<div class="modal-body" style="padding: 5px 15px 15px 15px !important;">
							<div style="text-align: left;font-size: 14px;" id="content">
							</div>
							<div style="display: grid;">
								<button type="button" class="btn btn-primary" data-dismiss="modal" style="margin-top: 10px;">OK</button>
							</div>
						</div>
					</div>
				</div>
			</div>

		</div>

	</template>

	<template id="sh_attendance_data_tbl_custom" inherit_id="sh_hr_dashboard.sh_attendance_data_tbl"
			  name="att_check_out_format">
		<xpath expr="//div[@class='col-2']/p[@class='attendance_in_time']" position="replace">
			<div class="">
				<p class="attendance_in_time">
					<t t-if="attendance.check_in">
						<span t-esc="attendance_dic[attendance][0].strftime('%d-%m-%Y')"/><br/>
						<span t-esc="attendance_dic[attendance][0].strftime('%H:%M:%S')"/>
					</t>
				</p>
			</div>
		</xpath>
		<xpath expr="//div[@class='col-2']/p[@class='attendance_out_time']" position="replace">
			<div class="">
				<p class="attendance_out_time">
					<t t-if="attendance.check_out">
						<span t-esc="attendance_dic[attendance][1].strftime('%d-%m-%Y')"/> <br/>
            			<span t-esc="attendance_dic[attendance][1].strftime('%H:%M:%S')"/>
					</t>
				</p>
			</div>
		</xpath>
	</template>
</odoo>