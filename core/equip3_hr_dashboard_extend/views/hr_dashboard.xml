<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="hr_dashboard_kanban_extend">
        <field name="name">sh.hr.dashboard.kanban</field>
        <field name="model">sh.hr.dashboard</field>
        <field name="inherit_id" ref="sh_hr_dashboard.sh_hr_dashboard_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//h1[@class='main_title']" position="before">
                <script type="text/javascript" src="/equip3_hr_dashboard_extend/static/src/js/hr_dashboard.js"></script>
            </xpath>
            <xpath expr="//div[@class='announcement_box']" position="replace">
                    <div class="announcement_box">
                        <h3 class="annoucement_title">ANNOUNCEMENT</h3>
                        <div class="announcement_container" id="js_id_hr_annoucement_data_tbl_div"></div>
                    </div>
            </xpath>
        </field>
    </record>

</odoo>