<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ir_cron_create_attendance_daily" model="ir.cron">
            <field name="name">Create Attendance Daily</field>
            <field name="model_id" ref="model_hr_attendance"/>
            <field name="state">code</field>
            <field name="code">model.cron_create_attendance_daily()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="False" />
            <field name="nextcall" eval="(DateTime.now() + relativedelta(days=0)).strftime('%Y-%m-%d 18:30:00')"/>
        </record>
    </data>
</odoo>
