<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="filter_menu" t-inherit="web.FilterMenu" t-inherit-mode="extension" owl="1">
        <xpath expr="//CustomFilterItem" position="replace">
            <t t-if="!hideFilter">
                <CustomFilterItem fields="props.fields"/>
            </t>
        </xpath>
    </t>
    <t t-name="GroupByMenu" t-inherit="web.GroupByMenu" t-inherit-mode="extension" owl="1">
        <xpath expr="//CustomGroupByItem" position="replace">
            <t t-debug=""/>
            <t t-if="!hideGroupby">
                <CustomGroupByItem fields="fields"/>
            </t>
        </xpath>
    </t>
</templates>