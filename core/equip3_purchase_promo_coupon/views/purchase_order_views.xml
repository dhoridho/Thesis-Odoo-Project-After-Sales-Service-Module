<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_order_form" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.coupon</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[hasclass('oe_subtotal_footer')]" position="before">
                <div style="position: absolute;right: 10px;">
                    <button name="%(sale_coupon.sale_coupon_apply_code_action)d" class="btn btn-secondary"
                        string="Coupon" type="action" groups="base.group_user" attrs="{'invisible': [('state', 'in', ('purchase', 'reject', 'done', 'cancel'))]}"/>
                    <button name="recompute_purchase_coupon_lines" class="btn btn-secondary" string="Promotions" type="object" attrs="{'invisible': [('state', 'in', ('purchase', 'reject', 'done', 'cancel'))]}"/>
                    <button name="action_cancel_promo" class="btn btn-secondary" string="Cancel Promo"
                        type="object" attrs="{'invisible': [('state', 'in', ('purchase', 'reject', 'done', 'cancel'))]}"/>
                </div>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='price_subtotal']" position="after">
                <field name="price_reduce" invisible="1"/>
            </xpath>
            <xpath expr="//group[hasclass('oe_subtotal_footer')]" position="attributes">
                <attribute name="class">mt-5 o_group o_inner_group oe_right oe_subtotal_footer</attribute>
            </xpath>
        </field>
    </record>

    <record id="purchase_order_view_form" model="ir.ui.view">
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="equip3_purchase_other_operation.purchase_order_view_form"></field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="is_valid_coupon" invisible="1"/>
            </xpath>
            <xpath expr="//page[@name='products']//field[@name='order_line']" position="attributes">
                <attribute name="attrs">{'invisible' : [('state', '=', 'request_for_amendment')], 
                    'readonly': ['|', '|', '|', ('state', 'in', ('done', 'cancel')), ('not_editable', '=', True), ('is_valid_coupon', '=', True), ('po_state', 'in', ['waiting_for_approve', 'rfq_approved', 'purchase'])]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
