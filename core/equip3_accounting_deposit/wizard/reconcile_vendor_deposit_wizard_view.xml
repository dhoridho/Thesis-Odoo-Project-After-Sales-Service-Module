<odoo>

    <record id="view_account_vendor_deposit_reconcile" model="ir.ui.view">
        <field name="name">account.vendor.deposit.reconcile.form</field>
        <field name="model">account.vendor.deposit.reconcile</field>
        <field name="arch" type="xml">
            <form string="Vendor Deposit Reconcile">
                <group cols="4">
                    <field name="date" required="1"/>
                    <field name="allocation_line_ids" string="Bill Deposit">
                        <tree editable="bottom">
                            <field name="invoice_id" string="Bills" required="True" domain="[('id', 'in', filter_move_ids)]"/>
                            <field name="filter_move_ids" widget="many2many_tags" invisible="1" />
                            <field name="allocation_amount" readonly="0" force_save="1"/>
                            <field name="invoice_due_amount" readonly="1" force_save="1"/>
                        </tree>
                     </field>
                </group>
                <footer>
                    <button string='Reconcile Deposit' name="reconcile_deposit" type="object" class="btn-primary" context="{'deposit_active_id':active_id}"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
           </form>
        </field>
    </record>

    <record id="action_account_vendor_deposit_reconcile" model="ir.actions.act_window">
        <field name="name">Reconcile Deposit</field>
        <field name="res_model">account.vendor.deposit.reconcile</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_account_vendor_deposit_reconcile"/>
        <field name="target">new</field>
    </record>

</odoo>