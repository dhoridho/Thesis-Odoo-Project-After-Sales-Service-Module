<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="vendor_deposit_amount_wizard_view" model="ir.ui.view">
            <field name="name">vendor.deposit.amount.wizard.form</field>
            <field name="model">vendor.deposit.amount.wizard</field> 
            <field name="arch" type="xml">
                <form string="Add Amount Vendor Deposit">
                    <group>
                        <!-- Invisible Field -->
                        <field name="currency_id" invisible='1'/>
                        <field name="is_vendor_deposit_approval_matrix" invisible='1'/>
                        <field name="approve_vendor_deposit" invisible='1'/>
                        
                        <field name="date" required='1'/>
                        <field name="deposit_amount"/>
                        <field name="final_amount"/>
                        <field name="final_remaining_amount"/>
                    </group>
                    <footer>
                        <button name="action_request_for_approval" string="Request For Approval" type="object" class="oe_highlight" attrs="{'invisible': ['|',('is_vendor_deposit_approval_matrix', '=', False), ('approve_vendor_deposit', '!=', False)]}"/>
                        
                        <button name="action_approve" string="Approve" type="object" class="oe_highlight" attrs="{'invisible': ['|',('is_vendor_deposit_approval_matrix', '=', False), ('approve_vendor_deposit', '=', False)]}"/>

                        <button name="action_reject" string="Reject" type="object" class="oe_highlight" attrs="{'invisible': ['|',('is_vendor_deposit_approval_matrix', '=', False), ('approve_vendor_deposit', '=', False)]}"/>          
                        
                        <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" attrs="{'invisible': [('is_vendor_deposit_approval_matrix', '!=', False)]}"/>
                        
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
