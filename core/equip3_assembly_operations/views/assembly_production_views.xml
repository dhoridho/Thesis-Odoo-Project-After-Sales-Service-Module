	<record id="view_disassembly_production_record_tree" model="ir.ui.view">
		<field name="name">view.disassembly.production.record.tree</field>
		<field name="model">assembly.production.record</field>
		<field name="inherit_id" ref="view_assembly_production_record_tree"/>
		<field name="mode">primary</field>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='product_qty']" position="attributes">
				<attribute name="string">Quantity</attribute>
			</xpath>
			<xpath expr="//field[@name='product_qty']" position="before">
				<field name="assembly_record_id"/>
			</xpath>
		</field>
	</record>

	<record id="view_disassembly_production_record_form" model="ir.ui.view">
		<field name="name">view.disassembly.production.record.form</field>
		<field name="model">assembly.production.record</field>
		<field name="inherit_id" ref="view_assembly_production_record_form"/>
		<field name="mode">primary</field>
		<field name="arch" type="xml">
			<xpath expr="//label[@for='product_qty']" position="attributes">
				<attribute name="string">Quantity</attribute>
			</xpath>
			<xpath expr="//field[@name='bom_id']" position="attributes">
				<attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="//field[@name='bom_id']" position="after">
				<field name="assembly_bom_id" string="Bill of Materials" context="{'default_product_tmpl_id': product_tmpl_id}" attrs="{'required': [('assembly_record_id', '=', False)]}" options="{'no_create_edit': True, 'no_create': True}"/>
			</xpath>
			<xpath expr="//label[@for='rejected_qty']" position="attributes">
				<attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="//field[@name='rejected_qty']/parent::div" position="attributes">
				<attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="//field[@name='company_id']" position="before">
				<field name="assembly_record_id" attrs="{'readonly': [('state', '=', 'confirm')]}" options="{'no_create_edit': True, 'no_create': True}"/>
			</xpath>
			<xpath expr="//field[@name='move_raw_ids']" position="attributes">
				<attribute name="context">{
					'default_company_id': company_id,
					'default_date': date_planned_start, 
					'default_date_deadline': date_deadline,
					'default_location_id': production_location_id, 
					'default_location_dest_id': location_src_id,
					'default_picking_type_id': picking_type_id,
					'default_warehouse_id': warehouse_id,
					'default_state': 'draft',
					'default_assembly_component_id': active_id,
				}</attribute>
				<attribute name="options">{
					'delete': [
						'&amp;', ('state', '=', 'draft'), ('assembly_record_id', '=', False)
					], 
					'create': [
						'&amp;', ('state', '=', 'draft'), ('assembly_record_id', '=', False)
					]
				}</attribute>
			</xpath>
			<xpath expr="//field[@name='move_raw_ids']//field[@name='product_id']" position="attributes">
				<attribute name="attrs">{
					'readonly': [
						'|', ('bom_line_id', '!=', False), ('parent.assembly_record_id', '!=', False)
					]
				}</attribute>
			</xpath>
			<xpath expr="//field[@name='move_raw_ids']//field[@name='assembly_product_uom_qty']" position="attributes">
				<attribute name="string">Quantity</attribute>
			</xpath>
			<xpath expr="//field[@name='move_raw_ids']//field[@name='assembly_quantity_done']" position="attributes">
				<attribute name="string">To Be Disassembled</attribute>
			</xpath>
			<xpath expr="//field[@name='move_raw_ids']//field[@name='product_uom']" position="attributes">
				<attribute name="attrs">{
					'readonly': [
						('parent.assembly_record_id', '!=', False)
					]
				}</attribute>
			</xpath>
			<xpath expr="//field[@name='move_raw_ids']//field[@name='assembly_product_free_qty']" position="attributes">
				<attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="//field[@name='move_raw_ids']//field[@name='location_id']" position="attributes">
				<attribute name="domain">[('id', '=', parent.production_location_id)]</attribute>
			</xpath>
			<xpath expr="//field[@name='move_raw_ids']//field[@name='location_dest_id']" position="attributes">
				<attribute name="domain">[('id', 'child_of', parent.location_dest_id)]</attribute>
			</xpath>
			<xpath expr="//field[@name='move_byproduct_ids']//field[@name='location_id']" position="attributes">
				<attribute name="domain">[('id', 'child_of', parent.location_src_id)]</attribute>
			</xpath>
			<xpath expr="//field[@name='move_byproduct_ids']//field[@name='location_dest_id']" position="attributes">
				<attribute name="domain">[('id', '=', parent.production_location_id)]</attribute>
			</xpath>
			<xpath expr="//field[@name='move_byproduct_ids']/parent::page" position="attributes">
				<attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="//page[@name='disassembly']" position="attributes">
				<attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="//field[@name='disassembly_remaining_qty']" position="attributes">
				<attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="//label[@for='action_generate_serial']" position="attributes">
				<attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="//button[@name='action_generate_serial']/parent::div" position="attributes">
				<attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="//page[@name='finished_lot']" position="attributes">
				<attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="//page[@name='rejected_lot']" position="attributes">
				<attribute name="invisible">1</attribute>
			</xpath>
		</field>
	</record>

