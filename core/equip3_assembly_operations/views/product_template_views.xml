<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_assembly" model="ir.ui.view">
        <field name="name">view.product.template.assembly</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Assembly" name="assembly_tab" attrs="{'invisible': ['|', ('type', '!=', 'product'), ('is_from_assembly', '=', False)]}">
                    <group>
                        <field name="produceable_in_assembly"/>
                        <field name="is_from_assembly" invisible="1"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>