<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="mrp_bom_form_view_assembly" model="ir.ui.view">
		<field name="name">mrp.bom.form.assembly</field>
		<field name="model">mrp.bom</field>
		<field name="inherit_id" ref="equip3_assembly_masterdata.mrp_bom_form_view"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='byproduct_ids']/tree" position="inside">
				<field name="assembly_allocated_cost" attrs="{'column_invisible': [('parent.equip_bom_type', '!=', 'assembly')]}" string="Allocated Cost (%)"/>
				<field name="assembly_cost" attrs="{'column_invisible': [('parent.equip_bom_type', '!=', 'assembly')]}" string="Cost"/>
			</xpath>

			<xpath expr="//field[@name='bom_line_ids']/tree" position="inside">
				<field name="assembly_cost" attrs="{'column_invisible': [('parent.equip_bom_type', '!=', 'assembly')]}" string="Cost"/>
			</xpath>

			<xpath expr="//field[@name='company_id']" position="before">
                <field name="assembly_forecast_cost" readonly="1" attrs="{'invisible': [('equip_bom_type', '!=', 'assembly')]}" string="Forecast Cost"/>
            </xpath>
		</field>
	</record>
</odoo>