<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_purchase_request_form_assembly" model="ir.ui.view">
		<field name="name">view.purchase.request.form.assembly</field>
		<field name="model">purchase.request</field>
		<field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='origin']" position="after">
				<field name="assembly_id" invisible="1"/>
				<field name="is_readonly_origin" invisible="1"/>
			</xpath>

			<xpath expr="//field[@name='origin']" position="attributes">
				<attribute name="attrs">{'readonly': [('is_readonly_origin', '=', True)]}</attribute>
				<attribute name="force_save">1</attribute>
			</xpath>
		</field>
	</record>
</odoo>