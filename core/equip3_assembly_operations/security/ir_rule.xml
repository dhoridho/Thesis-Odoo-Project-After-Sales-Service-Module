<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Assembly/Disassembly Multi-Company -->
    <record id="assembly_production_record_multi_company_rule" model="ir.rule">
        <field name="name">Assembly/Disassembly Production Record Multi-Company</field>
        <field name="model_id" ref="model_assembly_production_record"/>
        <field name="domain_force">[
            '|', 
                ('company_id', '=', False), 
                ('company_id', 'in', company_ids)
        ]</field>
    </record>

    <!-- Assembly/Disassembly Multi-Branch -->
    <record id="assembly_production_record_multi_branch_rule" model="ir.rule">
        <field name="name">Assembly/Disassembly Production Record Multi-Branch</field>
        <field name="model_id" ref="model_assembly_production_record"/>
        <field name="domain_force">[
            '|', 
                ('branch_id', '=', False), 
                ('branch_id', 'in', branch_ids)
        ]</field>
    </record>

</odoo>