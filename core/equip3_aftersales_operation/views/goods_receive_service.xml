<?xml version="1.0" encoding="utf-8"?>
<odoo>
       <record id="aftersale_goods_receive_service_search_view" model="ir.ui.view">
        <field name="name">goods.receive.service.search.view</field>
        <field name="model">goods.receive.service</field>
        <field name="arch" type="xml">
            <search string="Goods Receive Service">
                <field name="name" string="Goods Receive Service" filter_domain="[('name', 'ilike', self)]"/>
            </search>
        </field>
    </record>

    <record id="aftersale_goods_receive_service_tree_view" model="ir.ui.view">
        <field name="name">goods.receive.service.tree.view</field>
        <field name="model">goods.receive.service</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree string="Goods Receive Service">
                <field name="name"/>
                <field name="request_date"/>
                <field name="request_by"/>
                <field name="partner_id"/>
                <field name="facility_area"/>
            </tree>
        </field>
    </record>

        <record id="aftersale_goods_receive_service_form_view" model="ir.ui.view">
        <field name="name">goods.receive.service.form</field>
        <field name="model">goods.receive.service</field>
        <field name="arch" type="xml">
            <form string="Goods Receive Service">
                <header>
                    <field name="state" widget="statusbar"/>
                    <button name="button_confirm" type="object" string="Confirm" states="draft"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="is_confirmed" invisible="1" />
                            <field name="name" attrs="{'readonly': [('is_confirmed', '=', True)]}"/>
                            <field name="request_date" attrs="{'readonly': [('is_confirmed', '=', True)]}"/>
                            <field name="request_by" attrs="{'readonly': [('is_confirmed', '=', True)]}"/>
                        </group>
                        <group>
                            <field name="partner_id" attrs="{'readonly': [('is_confirmed', '=', True)]}"/>
                            <field name="facility_area" attrs="{'readonly': [('is_confirmed', '=', True)]}"/>
                            <field name="description" attrs="{'readonly': [('is_confirmed', '=', True)]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="product" string="Product">
                            <field name="line_ids" attrs="{'readonly': [('is_confirmed', '=', True)]}">
                                <tree string="Product" editable="bottom">
                                    <field name="toservice" string="Check"/>
                                    <field name="product_id"/>
                                    <field name="product_qty"/>
                                    <field name="prod_categ_id" invisible="1"/>
                                    <field name="product_uom" domain="[('category_id', '=', prod_categ_id)]"/>
                                </tree>
                                <form string="Product">
                                    <group>
                                        <group>
                                            <field name="product_id"/>
                                            <field name="note"/>
                                        </group>
                                        <group>
                                            <field name="product_qty"/>
                                        <field name="product_uom"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page name="checklist" string="Maintenance Equipment Checklist">
                            <field name="line_checklist_ids" attrs="{'readonly': [('is_confirmed', '=', True)]}">
                                <tree string="Checklist" editable="bottom">
                                    <field name="toservice" string="Check"/>
                                    <field name="product_id"/>
                                    <field name="product_qty"/>
                                    <field name="prod_categ_id" invisible="1"/>
                                    <field name="product_uom" domain="[('category_id', '=', prod_categ_id)]"/>
                                </tree>
                                <form string="Checklist">
                                    <group>
                                        <group>
                                            <field name="product_id"/>
                                            <field name="note"/>
                                        </group>
                                        <group>
                                            <field name="product_qty"/>
                                        <field name="product_uom"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_aftersale_goods_receive_service" model="ir.actions.act_window">
        <field name="name">Goods Receive Service</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">goods.receive.service</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="aftersale_goods_receive_service_search_view"/>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Goods Receive Service
            </p>
        </field>
    </record>

</odoo>
