<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_service_approval_matrix_view_tree" model="ir.ui.view">
        <field name="name">sale.service.approval.matrix.tree</field>
        <field name="model">sale.service.approval.matrix</field>
        <field name="priority">2</field>
        <field name="arch" type="xml">
            <tree string="Sale Service" multi_edit="1" sample="1">
                <field name="name" />
                <field name="company_id" />
            </tree>
        </field>
    </record>

        <record id="view_sale_service_approval_matrix_form" model="ir.ui.view">
        <field name="name">sale.service.approval.matrix.form</field>
        <field name="model">sale.service.approval.matrix</field>
        <field name="arch" type="xml">
            <form string="Sale Service">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="company_id"/>
                            <field name="branch_id"/>
                        </group>
                        <group>
                            <field name="create_date" readonly="1"/>
                            <field name="create_uid" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Approval Matrix" name="matrix_lines">
                            <field name="approval_matrix_ids" context="{'approval_matrix_ids' : approval_matrix_ids}">
                                <tree editable="bottom">
                                    <field name="sequence" invisible="1" />
                                    <field name="sequence2" />
                                    <field name="user_ids" widget="many2many_tags" />
                                    <field name="minimum_approver" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_approval_matrix" model="ir.actions.act_window">
        <field name="name">Sale Service Approval Matrix</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.service.approval.matrix</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Sale Service Approval Matrix
            </p>
        </field>
    </record>

</odoo>
