<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="maintenance_service_view_search" model="ir.ui.view">
        <field name="name">maintenance.service.search.sale</field>
        <field name="model">maintenance.service</field>
        <field name="inherit_id" ref="equip3_aftersales_operation.sale_service_view_search"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//search" position="attributes">
                <attribute name="string">Search Maintenance Service</attribute>
            </xpath>
        </field>
    </record>

    <record id="maintenance_service_view_tree" model="ir.ui.view">
        <field name="name">maintenance.service.tree</field>
        <field name="model">maintenance.service</field>
        <field name="priority">2</field>
        <field name="inherit_id" ref="equip3_aftersales_operation.sale_service_view_tree"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="string">Maintenance Service</attribute>
                <attribute name="create">0</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_maintenance_service_form" model="ir.ui.view">
        <field name="name">maintenance.service.form</field>
        <field name="model">maintenance.service</field>
        <field name="inherit_id" ref="equip3_aftersales_operation.view_sale_service_form"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//form" position="attributes">
                <attribute name="string">Maintenance Service</attribute>
                <attribute name="create">0</attribute>
            </xpath>
            <button name="request_aproval" position="replace"/>
            <button name="action_approve" position="replace"/>
            <xpath expr="//header[1]" position="inside">
                <button name="do_handle" type="object" string="Handle" states="pending"/>
                <button name="do_oncheck" type="object" string="On Check" states="handle"/>
                <button name="do_service" type="object" string="Service" attrs="{'invisible': ['|', ('state', '!=','oncheck'), '&amp;', ('delivery_type', '=', 'delivery_after_payment'), ('invoice_paid', '=', False)]}"/>
                <button name="do_done" type="object" string="Done" states="service,undone"/>
                <button name="do_undone" type="object" string="Undone" states="done"/>
                <button name="do_close" type="object" string="Close" states="done"/>
            </xpath>
            <xpath expr="//header[@name='maintenance_header']" position="replace"/>
        </field>
    </record>

    <record id="action_maintenance_service" model="ir.actions.act_window">
        <field name="name">Maintenance Service</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">maintenance.service</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="maintenance_service_view_search"/>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Maintenance Service
            </p>
        </field>
    </record>

</odoo>
