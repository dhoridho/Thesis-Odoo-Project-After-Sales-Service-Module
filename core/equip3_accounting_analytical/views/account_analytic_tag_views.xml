<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_analytic_tag_tree_view_inherit" model="ir.ui.view">
        <field name="name">account_analytic_tag_list</field>
        <field name="model">account.analytic.tag</field>
        <field name="inherit_id" ref="analytic.account_analytic_tag_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="string">Analytic Group</attribute>
            </xpath>
        </field>
    </record>

    <record id="account_analytic_tag_views_form" model="ir.ui.view">
        <field name="name">account_analytic_tag_form</field>
        <field name="model">account.analytic.tag</field>
        <field name="inherit_id" ref="analytic.account_analytic_tag_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="string">Analytic Group</attribute>
            </xpath>
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="create_uid" string="Created By"/>
                <field name="create_date" string="Created Date"/>
            </xpath>
            <xpath expr="//field[@name='analytic_distribution_ids']//tree/field[@name='account_id']" position="before">
                <field name="analytic_group_id"/>
            </xpath>
            <xpath expr="//field[@name='active_analytic_distribution']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='analytic_distribution_ids']//tree/field[@name='account_id']" position="attributes">
                <attribute name="domain">[('group_id', '=', analytic_group_id)]</attribute>
            </xpath>
            <xpath expr="//field[@name='analytic_distribution_ids']//tree/field[@name='percentage']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
            <xpath expr="//sheet/group/field[@name='company_id']" position="attributes">
                <attribute name="readonly">1</attribute>                        
                <attribute name="force_save">1</attribute>                        
            </xpath>

            <xpath expr="//sheet" position="after">
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </xpath>
        </field>
    </record>

    <record id="account_analytic_account_views_form" model="ir.ui.view">
        <field name="name">account_analytic_account_form</field>
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="create_uid" string="Created By"/>
                <field name="create_date" string="Created Date"/>
            </xpath>
        </field>
    </record>

    <record id="account_analytic_group_views_form" model="ir.ui.view">
        <field name="name">account_analytic_group_form</field>
        <field name="model">account.analytic.group</field>
        <field name="inherit_id" ref="analytic.account_analytic_group_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="create_uid" string="Created By"/>
                <field name="create_date" string="Created Date"/>
            </xpath>

            <xpath expr="//sheet/group[2]" position="after">
                <group>
                    <field name="analyticnew_ids" nolabel="1">
                        <tree editable="bottom">
                            <field name= "group_id" invisible="1"/>
                            <field name="name" context="{'show_only_name' : True}" domain="[('group_id', '=', False)]"/>
                        </tree>
                    </field>
                </group>
            </xpath>

            <xpath expr="//sheet" position="after">
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </xpath>
        </field>
    </record>

    <record id="account_analytic_default_views_form" model="ir.ui.view">
        <field name="name">account_analytic_default_form</field>
        <field name="model">account.analytic.default</field>
        <field name="inherit_id" ref="account.view_account_analytic_default_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='analytic_id']" position="after">
                <field name="create_date" string="Created Date"/>
                <field name="create_uid" string="Created By"/>
            </xpath>
            <xpath expr="//sheet" position="after">
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </xpath>
        </field>
    </record>

    <record id="account_analytic_line_views_form" model="ir.ui.view">
        <field name="name">account_analytic_line_form</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="create_uid" string="Created By"/>
                <field name="create_date" string="Created Date"/>
            </xpath>
            <xpath expr="//sheet" position="after">
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </xpath>
        </field>
    </record>

    <record id="account.account_analytic_group_menu" model="ir.ui.menu">
        <field name="name">Analytic Categories</field>
    </record>

    <record id="analytic.account_analytic_group_action" model="ir.actions.act_window">
        <field name="name">Analytic Categories</field>
    </record>

    <record id="account.account_analytic_tag_menu" model="ir.ui.menu">
        <field name="name">Analytic Group</field>
    </record>

    <record id="analytic.account_analytic_tag_action" model="ir.actions.act_window">
        <field name="name">Analytic Group</field>
    </record>

    <record id="mr_account_analytic_default_views_form" model="ir.ui.view">
        <field name="name">account_analytic_default_form</field>
        <field name="model">account.analytic.default</field>
        <field name="inherit_id" ref="account.view_account_analytic_default_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='analytic_tag_ids']" position="attributes">
                <attribute name="string">Analytic Groups</attribute>
            </xpath>
        </field>
    </record>

    <record id="mr_account_analytic_default_views_tree" model="ir.ui.view">
        <field name="name">account_analytic_default_tree</field>
        <field name="model">account.analytic.default</field>
        <field name="inherit_id" ref="account.view_account_analytic_default_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='analytic_tag_ids']" position="attributes">
                <attribute name="string">Analytic Groups</attribute>
            </xpath>
        </field>
    </record>

</odoo>
