<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Users Inherit Form View to Modify it -->
    <record id="view_users_form_inherit_account_analytic_tag" model="ir.ui.view">
        <field name="name">view.users.form.inherit.account_analytic_tags</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="branch.view_users_form_inherit_branch"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='branch_id']/parent::group" position="after">
                <group>
                    <group name="analytic_tags">
                        <field name="analytic_tag_ids" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="allow_analytic_group"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <record id="account_analytic_tags_res_branch_view_form" model="ir.ui.view">
        <field name="name">branch.res.branch.view.form</field>
        <field name="model">res.branch</field>
        <field name="inherit_id" ref="branch.branch_res_branch_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="after">
                <group>
                    <group name="analytic_tags">
                        <field name="analytic_tag_ids" widget="many2many_tags"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <record id="account_analytic_tags_product_category_form_view" model="ir.ui.view">
        <field name="name">product.category.form</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='first']" position="after">
                <group>
                    <group name="analytic_tags">
                        <field name="analytic_tag_ids" widget="many2many_tags"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>


    <record id="account_analytic_priority_tree" model="ir.ui.view">
        <field name="name">account.analytic.priority.view.tree</field>
        <field name="model">analytic.priority</field>
        <field name="arch" type="xml">
            <tree string="Analytic Group Prioritization">
                <field name="priority" widget="handle"/>
                <!-- <field name="analytic_priority_sequence" widget="handle"/> -->
                <field name="object_id"/>
            </tree>
        </field>
    </record>


    <record id="account_analytic_priority_action" model="ir.actions.act_window">
        <field name="name">Analytic Group Prioritization</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">analytic.priority</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                    Click here to create a new branch.
            </p>
        </field>
    </record>

    <function model="account.analytic.default" name="action_delete_menu_analytical"/>

    <menuitem id="menu_analytic_priority_list" action="account_analytic_priority_action" parent="account.menu_analytic_accounting"/>
</odoo>
