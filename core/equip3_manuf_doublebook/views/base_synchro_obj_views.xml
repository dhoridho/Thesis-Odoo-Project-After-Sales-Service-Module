<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="base_synchro_obj_form" model="ir.ui.view">
        <field name="name">base.synchro.obj.form</field>
        <field name="model">base.synchro.obj</field>
        <field name="inherit_id" ref="base_synchro.base_synchro_obj_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="action_check" type="object" string="Check" attrs="{'invisible': [('is_mrp_sync', '=', False)]}" class="oe_highlight"/>
                </header>
            </xpath>
            <xpath expr="//field[@name='synchronize_date']" position="after">
                <field name="is_mrp_sync"/>
                <field name="is_mrp_field_exist" invisible="1"/>
                <field name="is_mrp_need_update" invisible="1"/>

                <div attrs="{'invisible': ['|', ('is_mrp_sync', '=', False), ('is_mrp_field_exist', '=', True)]}">
                    <span class="text-danger">All models synchronized using production sync must have the `base_sync_last_sync` field!</span>
                </div>
                <div attrs="{'invisible': ['|', ('is_mrp_sync', '=', False), ('is_mrp_need_update', '=', False)]}">
                    <span class="text-danger">Record has been modified, please update records to sync by clicking button `Check`!</span>
                </div>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page name="records" string="Records To Sync" attrs="{'invisible': ['|', ('is_mrp_sync', '=', False), ('record_to_sync_ids', '=', [])]}">
                    <field name="record_to_sync_ids">
                        <tree string="Records To Sync">
                            <field name="res_model" invisible="1"/>
                            <field name="res_id" invisible="1"/>
                            <field name="res_display_name" string="Name"/>
                            <field name="res_create_date" string="Create Date"/>
                            <field name="last_sync"/>
                            <field name="synchronized"/>
                            <button name="action_view_record" type="object" class="oe_highlight" string="View Record"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>