<odoo>
    <record id="purchase_agreement_view_form_inherit" model="ir.ui.view">
        <field name="name">purchase.agreement.form.inherit</field>
        <field name="model">purchase.agreement</field>
        <field name="inherit_id" ref="equip3_purchase_other_operation.purchase_agreement_view_form_inherit"/>
        <field name="arch" type="xml">
            <field name="is_price_ratting_rfq_tender" position="after">
                <field name="is_rental_orders" invisible='1'></field>
                <label for="rent_duration" attrs="{'invisible': [('is_rental_orders', '=', False)]}"/>
                <div class="o_row" name="rent_date" attrs="{'invisible': [('is_rental_orders', '=', False)]}">
                    <field name="rent_duration" attrs="{'required': [('is_rental_orders', '=', True)]}"></field> <field name="rent_duration_unit" attrs="{'required': [('is_rental_orders', '=', True)]}"></field>
                </div>
            </field>
        </field>
    </record>
</odoo>