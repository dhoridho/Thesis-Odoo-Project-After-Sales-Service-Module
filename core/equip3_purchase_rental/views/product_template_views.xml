<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_last_purchase_info_form_view" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id"
            ref="purchase_last_price_info.product_template_last_purchase_info_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='purchase']/group[@name='last_purchase_info']"
                position="before">
                <group name="rented" string="Rental Order"
                    attrs="{'invisible': [('type', 'not in', ('product', 'asset'))]}">
                    <div>
                        <field name="is_rented" />
                        <label for="is_rented" />
                    </div>
                </group>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="product_category_view_form_inherit">
        <field name="name">product.category.view.form.inherit</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view" />
        <field name="arch" type="xml">
            <field name="property_account_expense_categ_id" position="after">
                <field name="rental_account" attrs="{'required': [('stock_type', '=', 'product')]}" />
            </field>
        </field>
    </record>

</odoo>
