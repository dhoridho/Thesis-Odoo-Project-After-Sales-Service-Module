<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="extend_rental_form" model="ir.ui.view">
        <field name="name">extend.rental.form</field>
        <field name="model">extend.rental</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group string="Existing RFQ to update:">
                        <group>
                            <field name="old_date_planned" readonly="True"/>
                            <label for="old_rent_duration"/>
                            <div class="o_row" name="old_rent_date" width="100px">
                                <field name="old_rent_duration" readonly="True"></field> <field name="old_rent_duration_unit" readonly="True"></field>
                            </div>
                            <field name="date_planned" readonly="True"/>
                            <label for="rent_duration"/>
                            <div class="o_row" name="rent_date">
                                <field name="rent_duration"></field> <field name="rent_duration_unit"></field>
                            </div>
                        </group>
                        <group></group>
                    </group>
                    <field name="line_ids" nolabel="1">
                        <tree create="0" editable="bottom">
                            <field name="product_id" readonly="1"/>
                            <field name="description" readonly="1"/>
                            <field name="rented_qty" readonly="1"/>
                            <field name="extend_qty"/>
                            <field name="unit_price"/>
                        </tree>
                    </field>
                    <footer>
                        <button name="action_create_rfq" string="Create RFQ" type="object" class="oe_highlight"/>
                        <!-- <button string="Cancel" type="object" name="action_cancel" class="btn-secondary"/> -->
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>