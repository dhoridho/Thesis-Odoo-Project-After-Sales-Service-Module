<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_partner_tax_form_view_inherit" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="equip3_hashmicro_ui.view_form_res_partner_inherit_new_column"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="is_leads" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="view_partners_form_crm_inherit" model="ir.ui.view">
        <field name="name">view.res.partner.form.crm.inherited</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="crm.view_partners_form_crm1"/>
        <field name="arch" type="xml">
            <data>
                <button class="oe_stat_button o_res_partner_tip_opp" position="attributes">
                    <attribute name="invisible">1</attribute>
                </button>
                <button class="oe_stat_button" position="attributes">
                    <attribute name="invisible">1</attribute>
                </button>
                <div name="button_box" position="inside">
                    <button class="oe_stat_button o_res_partner_tip_opp" type="object"
                        name="action_view_opportunity"
                        icon="o-hm-smart-crm-opportunity"
                        groups="sales_team.group_sale_salesman"
                        context="{'default_partner_id': active_id}">
                        <field string="Opportunities" name="opportunity_count" widget="statinfo"/>
                    </button>
                    <button class="oe_stat_button" type="object"
                        name="schedule_meeting"
                        icon="o-hm-smart-hrm-meetings"
                        groups="sales_team.group_sale_salesman"
                        context="{'partner_id': active_id, 'partner_name': name}">
                        <field string="Meetings" name="meeting_count" widget="statinfo"/>
                    </button>
                </div>
            </data>
        </field>
    </record>

    <record id="view_partners_form_crm_phonecall_inherit" model="ir.ui.view">
        <field name="name">view.res.partner.form.crm.phonecall.inherited</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="crm_phonecall.view_partners_form_crm_calls_inherit" />
        <field name="arch" type="xml">
            <button name="%(crm_phonecall.crm_case_categ_phone_incoming0)d" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
            <button name="schedule_meeting" position="before">
                <button
                    class="oe_stat_button"
                    context="{'search_default_partner_id': active_id}"
                    icon="o-hm-smart-all-calls"
                    name="%(crm_phonecall.crm_case_categ_phone_incoming0)d"
                    type="action"
                >
                    <field name="phonecall_count" string="Calls" widget="statinfo" />
                </button>
            </button>
        </field>
    </record>

    <record id="view_form_res_partner_inherit" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="equip3_sale_masterdata.view_form_res_partner_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='customer_sequence']/.." position="attributes">
                <attribute name="attrs">{'invisible': ['|', '|', '|', ('is_leads', '=', True), ('is_customer', '=', False), ('customer_rank', '=', 0), ('id', '=', False)]}</attribute>
            </xpath>
        </field>
    </record>

    <record id="base.action_partner_form" model="ir.actions.act_window">
        <field name="context">{'res_partner_search_mode': 'customer', 'default_is_customer': True, 'search_default_partner_leads': 1}</field>
        <field name="domain">['|', ('is_leads', '=', True), ('is_customer', '=', True)]</field>
    </record>

    <record id="view_res_partner_filter" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter" />
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <filter string="Partner Leads" name="partner_leads" domain="[('is_leads', '=', True)]"/>
            </field>
        </field>
    </record>

    <record id="res_partner_kanban_view" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.res_partner_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_kanban_global_click')]/t/div[hasclass('o_kanban_image_fill_left')]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[hasclass('oe_kanban_global_click')]/t/div[hasclass('o_kanban_image')]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[hasclass('oe_kanban_global_click')]/t[2]/div[hasclass('o_kanban_image_fill_left')]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='type']" position="after">
                <field name="is_leads"/>
                <field name="customer_rank"/>
                <field name="supplier_rank"/>
            </xpath>
            <xpath expr="//div[hasclass('oe_kanban_details')]" position="before">
                <t t-if="record.is_leads.raw_value and !record.customer_rank.raw_value and !record.supplier_rank.raw_value">
                    <t t-set="placeholder" t-value="'/equip3_crm_masterdata/static/img/cust_crm_image1.png'"/>
                    <div class="o_kanban_image_fill_left o_kanban_image_full" t-attf-style="background-image: url(#{kanban_image('res.partner', 'image_128', record.id.raw_value, placeholder)})" role="img"/>
                </t>
            </xpath>
        </field>
    </record>

</odoo>
