<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="crm_stage_tree" model="ir.ui.view">
        <field name="name">crm.stage.tree</field>
        <field name="model">crm.stage</field>
        <field name="inherit_id" ref="crm.crm_stage_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="color" widget="color_picker"/>
            </xpath>
        </field>
    </record>

    <record id="crm_stage_form" model="ir.ui.view">
        <field name="name">crm.stage.form</field>
        <field name="model">crm.stage</field>
        <field name="inherit_id" ref="crm.crm_stage_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/group" position="inside">
                <field name="color" widget="color" class="oe_read_only"/>
            </xpath>
            <xpath expr="//group" position="after">
                <label for="color_new" class="oe_edit_only" style="color:black;margin-left:10px"/>
                <br/>
                <field name="color_new" widget="color_picker" class="oe_edit_only" style="margin-left:10px"/>
                <br/><br/>
                <label for="custom_color" class="oe_edit_only" string="Custom Color" style="color:black;margin-left:10px"/>
                <br/>
                <field name="custom_color" widget="color" string="Custom Color" class="oe_edit_only" style="margin-left:10px"/>
            </xpath>
        </field>
    </record>

</odoo>