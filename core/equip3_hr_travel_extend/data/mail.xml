<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!--Start My Travel Request travel.request model-->
        <!--   Start Travel Request Email Templates-->
        <record id="email_template_travel_request_approval" model="mail.template">
            <field name="name">Application for Travel Request Approval - Send by Email</field>
            <field name="email_from">${ctx['email_from']|safe}</field>
            <field name="subject">Application for Travel Request Approval</field>
            <field name="email_to">${ctx['email_to']|safe}</field>
            <field name="model_id" ref="equip3_hr_travel_extend.model_travel_request"/>
            <field eval="True" name="auto_delete"/>
            <field name="body_html"><![CDATA[
            <p>Dear ${ctx['approver_name']|safe},
                <br/>
                <p>
                    Based on the Travel Request ${object.name}. You have approval pending that need your decision to approve or reject the Travel Request from ${object.employee_id.name}.
            </p>
            <br/>
            <p>
                ${object.employee_id.name}  has requested Travel Request for ${object.travel_purpose} in Project : ${object.project_id.name}. For Request Departure Date : ${ctx['date_from']|safe} and Request Return Date : ${ctx['date_to']|safe}.
            </p>
            <br/>
            <p>
                You can approve or reject the Travel Request by clicking this button:
            </p>
            <br/>
            <a href="${ctx['url']|safe}"
               style="padding: 8px 12px; font-size: 12px; color: #FFFFFF; text-decoration: none !important; font-weight: 400; background-color: #875A7B; border: 0px solid #875A7B; border-radius:3px">
                View Travel Request
            </a>

            <br/>
            <br/>
            <p>
                Thank you.
            </p>
            <br/>
            <br/>
                    ]]></field>
        </record>

        <!--  End Travel Request Email Templates-->

        <!-- Start Travel Request, Approved Email template-->
        <record id="email_template_travel_request_approved" model="mail.template">
            <field name="name">Approval of Travel Request - Send by Email</field>
            <field name="email_from">${ctx['email_from']|safe}</field>
            <field name="subject">Approval of Travel Request</field>
            <field name="email_to">${ctx['email_to']|safe}</field>
            <field name="model_id" ref="equip3_hr_travel_extend.model_travel_request"/>
            <field eval="True" name="auto_delete"/>
            <field name="body_html"><![CDATA[
            <p>Dear ${object.employee_id.name},</p>
            <br/>
            <p>
                We have received your Travel Request on ${object.name}.
            </p>
            <br/>
            <p>
                This notification serves as confirmation that your Travel Request has been Approved.
            </p>
            <br/>
            <br/>
            <p>
                Thank you.
            </p>
            <br/>
            <br/>
                    ]]></field>
        </record>
        <!-- End Travel Request, Approved Email template-->

        <!-- Start Travel Request, Reject Email template-->
        <record id="email_template_travel_request_rejection" model="mail.template">
            <field name="name">Rejection of Travel Request - Send by Email</field>
            <field name="email_from">${ctx['email_from']|safe}</field>
            <field name="subject">Rejection of Travel Request</field>
            <field name="email_to">${ctx['email_to']|safe}</field>
            <field name="model_id" ref="equip3_hr_travel_extend.model_travel_request"/>
            <field eval="True" name="auto_delete"/>
            <field name="body_html"><![CDATA[
            <p>Dear ${object.employee_id.name},</p>
            <br/>
            <p>
               We have received your Travel Request on ${object.name}.
            </p>
            <br/>
            <p>
                This notification serves as confirmation that your Travel Request has been Rejected.
            </p>
            <br/>
            <br/>
            <p>
                Thank you.
            </p>
            <br/>
            <br/>
                    ]]></field>
        </record>
        <!-- End Travel Request, Reject Email template-->

        <!-- Start My Travel Request travel.request model-->


        <!--Start My Travel Cancel employee.travel.cancellation model-->
