<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ir_cron_create_attendance_travel" model="ir.cron">
            <field name="name">Update Attendance Status to Travel</field>
            <field name="model_id" ref="model_travel_request"/>
            <field name="state">code</field>
            <field name="code">model._cron_create_attendance_travel()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="datetime.now() + (datetime.now(pytz.timezone('Asia/Jakarta')).replace(hour=2, minute=00, second=00) - datetime.now(pytz.timezone('Asia/Jakarta'))) % timedelta(hours=24)"/>
        </record>
    </data>
</odoo>
