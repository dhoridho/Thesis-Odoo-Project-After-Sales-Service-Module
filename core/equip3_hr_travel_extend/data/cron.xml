<?xml version="1.0"?>
<odoo>
    <data noupdate="1">
        <!-- [Travel Request] Scheduler for Auto Follow Up Approver-->
        <record forcecreate="True" id="ir_cron_travel_auto_follow_up_approver" model="ir.cron">
            <field name="name">Auto Follow Up Travel Approver</field>
            <field name="model_id" ref="model_travel_request"/>
            <field name="state">code</field>
            <field name="code">model.get_auto_follow_up_approver()</field>
            <field eval="False" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
        </record>
        <!-- [Travel Cancel] Scheduler for Auto Follow Up Approver-->
        <record forcecreate="True" id="ir_cron_travel_cancel_auto_follow_up_approver" model="ir.cron">
            <field name="name">Auto Follow Up Travel Cancel Approver</field>
            <field name="model_id" ref="model_employee_travel_cancellation"/>
            <field name="state">code</field>
            <field name="code">model.get_auto_follow_up_approver()</field>
            <field eval="False" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
        </record>
    </data>
</odoo>