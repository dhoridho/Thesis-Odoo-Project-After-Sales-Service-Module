<?xml version="1.0"  encoding="utf-8"?>
<odoo>
    <record id="employee_travel_cancel_managment" model="ir.sequence">
        <field name="name">travel_cancel_sequencer</field>
        <field name="code">employee.travel.cancellation</field>
        <field name="prefix">TRC/%(year)s/%(month)s/%(day)s/</field>
        <field name="padding">3</field>
    </record>

    <record id="view_employee_travel_cancellation_filter" model="ir.ui.view">
            <field name="name">employee.travel.cancellation.filter</field>
            <field name="model">employee.travel.cancellation</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <filter string="Pending My Approval" name="pending_my_approval" domain="[('approvers_ids', 'in', uid),('approved_user_ids','not in',uid)]"/>
                </search>
            </field>
        </record>

    <record id="view_employee_travel_cancellation_tree" model="ir.ui.view">
        <field name="name">employee.travel.cancellation.tree</field>
        <field name="model">employee.travel.cancellation</field>
        <field name="arch" type="xml">
            <tree string="Travel Cancellation">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="department_manager_id"/>
                <field name="department_id"/>
                <field name="job_id"/>
                <field name="currency_id"/>

                <field name="state" 
                       decoration-success="state == 'approved'"  
                       decoration-danger="state == 'rejected'" 
                       decoration-primary="state == 'draft'"
                       decoration-warning="state == 'confirmed'"
                       widget='badge'/>
            </tree>
        </field>
    </record>

    <record id="view_employee_travel_cancellation_form" model="ir.ui.view">
        <field name="name">employee.travel.cancellation.form</field>
        <field name="model">employee.travel.cancellation</field>
        <field name="arch" type="xml">
            <form string="Travel Cancellation">
                <header>
                    <button string="Confirm" name="action_confirm" states="draft" type="object"
                            class="oe_highlight"/>
                    <button string="Approve" name="wizard_approve" type="object" class="oe_highlight"
                            attrs="{'invisible': ['|', ('is_approver', '=', False), ('state', '!=', 'confirmed')]}"/>
                    <button string="Reject" name="wizard_reject" type="object" class="oe_highlight"
                            attrs="{'invisible': ['|', ('is_approver', '=', False), ('state', '!=', 'confirmed')]}"/>
                    <field name="state"
                           widget="statusbar"
                           statusbar_visible="draft,confirmed,approved,rejected"
                           attrs="{'invisible': [('is_travel_approval_matrix', '=', False)]}"/>
                    <field name="state1" 
                           widget="statusbar"
                           statusbar_visible="draft,approved"
                           attrs="{'invisible': [('is_travel_approval_matrix', '=', True)]}"/>

                </header>
                <sheet>
                    <h2>
                        <field name="name"/>
                    </h2>
                    <group>

                        <group>
                            <field name="is_readonly" invisible="1" />
                            <field name="domain_employee_ids" invisible="1" />
                            <field name="employee_id" attrs="{'readonly':['|',('is_readonly','=',True),('state','!=','draft')]}" domain="[('id','in',domain_employee_ids)]"/>
                            <field name="travel_id"/>
                            <field name="department_manager_id"/>
                            <field name="department_id"/>
                            <field name="job_id"/>
                            <field name="currency_id"/>
                        </group>

                        <group>

                            <field name="expence_sheet_id"/>
                            <field name="cash_advance_orgin_id"/>
                            <!--Approval MAtrix-->
                                <field name="approvers_ids" widget="many2many_tags" invisible="1"/>
                                <field name="approved_user_ids" widget="many2many_tags" invisible="1" readonly="0"/>
                                <field name="is_approver" invisible="1"/>
                                <field name="approved_user_text" invisible="1"/>
                                <field name="approved_user" invisible="1" readonly="1"/>
                                <field name="feedback_parent" invisible="1"/>
                                <field name="is_travel_approval_matrix" invisible="1"/>
                        </group>

                    </group>
                    <notebook>
                        <page string="Travel Request information">
                            <group>
                                <group>
                                    <field name="travel_purpose"/>
                                    <field name="project_id"/>
                                    <field name="account_analytic_id"/>
                                </group>
                            </group>
                            <group string="Travel Details">
                                <group>

                                    <label for="from_city" string="From"/>
                                    <div class="o_address_format">

                                        <field name="from_city" placeholder="City" class="o_address_city"/>
                                        <field name="from_state_id" class="o_address_state" placeholder="State"
                                               options="{&quot;no_open&quot;: True}"/>

                                        <field name="from_country_id" placeholder="Country" class="o_address_country"
                                               options="{&quot;no_open&quot;: True}"/>
                                    </div>
                                </group>
                            </group>
                            <group>
                                <group>
                                    <field name="req_departure_date"/>
                                    <field name="req_return_date"/>
                                    <field name="req_travel_mode_id"/>
                                    <field name="days"/>
                                </group>
                                <group>
                                    <field name="phone_no"/>
                                    <field name="email"/>
                                </group>
                            </group>
                        </page>
                        <page string="Other Info">
                            <group>
                                <group>
                                    <field name="start_today_date"/>
                                    <field name="available_departure_date"/>
                                    <field name="departure_mode_travel_id"/>
                                    <field name="visa_agent_id"/>

                                </group>
                                <group>
                                    <field name="available_return_date"/>
                                    <field name="return_mode_travel_id"/>
                                    <field name="ticket_booking_agent_id"/>
                                </group>

                            </group>
                            <group string="Accounting Info">
                                <group>
                                    <field name="bank_id"/>
                                    <field name="cheque_number"/>
                                </group>
                                <group></group>
                            </group>
                        </page>
                        <page string="Cash Advance">
                            <field name="cash_advance_ids" widget="one2many_list">
                                <tree editable="bottom">
                                    <field name="employee_id" readonly="1"/>
                                    <field name="name"/>
                                    <field name="amount"/>
                                    <field name="state" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Approval Matrix Lines"
                              attrs="{'invisible': [('is_travel_approval_matrix', '!=', True)]}">
                            <field name="travel_cancel_approver_user_ids">
                                <tree editable="bottom" create="false" delete="false">
                                    <field name="name"/>
                                    <field name="user_ids" widget="many2many_tags" readonly="1" force_save="1"/>
                                    <field name="matrix_user_ids" widget="many2many_tags" invisible="1" readonly="1" force_save="1"/>
                                    <field name="is_delegation_mail_sent" invisible="1"/>
                                    <field name="minimum_approver" readonly="1" force_save="1"/>
                                    <field name="timestamp" invisible="1" force_save="1"/>
                                    <field name="approver_state" invisible="1" force_save="1"/>
                                    <field name="approval_status" readonly="1" force_save="1"/>
                                    <field name="approved_time" readonly="1" force_save="1"/>
                                    <field name="is_approve" invisible="1" force_save="1"/>
                                    <field name="approved_employee_ids" invisible="1"/>
                                    <field name="feedback" readonly="1" force_save="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="activity_ids" widget="mail_activity"/>
                </div>
            </form>
        </field>
    </record>

