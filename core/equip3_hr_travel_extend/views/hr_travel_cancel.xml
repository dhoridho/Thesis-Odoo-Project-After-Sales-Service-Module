    <record id="action_travel_cancel" model="ir.actions.act_window">
        <field name="name">Travel Cancellation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">employee.travel.cancellation</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create"></p>
            <p></p>
        </field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('equip3_hr_travel_extend.view_employee_travel_cancellation_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('equip3_hr_travel_extend.view_employee_travel_cancellation_form')})]"/>
    </record>

    <record id="action_travel_cancel_approve" model="ir.actions.act_window">
