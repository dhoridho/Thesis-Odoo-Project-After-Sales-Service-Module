<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_travel_flow_view_form" model="ir.ui.view">
        <field name="name">hr.travel.flow.view.form</field>
        <field name="model">hr.travel.flow</field>
        <field name="arch" type="xml">
            <form string="HR Travel FLow" class="hr_travel_flow_menu d-flex flex-column">
                <div class="content-header">
                    <div class="d-flex p-3 w-100">
                        <span>HR Travel Flow</span>
                    </div>
                </div>

                <div class="content-body">
                    <div class="container h-100">
                        <div class="row h-100">
                            <div class="col-md-2 d-flex flex-column">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12 col-12">
                                        <button name="equip3_hr_travel_extend.travel_approval_matrix_act_window" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_travel_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Travel Approval Matrix</div>
                                        </button>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12">
                                        <button name="equip3_hr_travel_extend.equip3_hr_travel_approval_config_settings_action" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_travel_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Setting</div>
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4 d-flex flex-column">
                                <div class="row">
                                    <div class="col-md-6 col-sm-6 col-6">
                                        <button name="equip3_hr_travel_extend.action_travel_request_custom" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_travel_extend/static/src/img/travel-main.svg"/>
                                            </div>
                                            <div class="button-text">Travel</div>
                                            <div class="menu-arrow">
                                                <span class="arrow is-triangle arrow-bar is-right"></span>
                                            </div>
                                        </button>
                                    </div>

                                    <div class="col-md-6 col-sm-6 col-6">
                                        <button name="equip3_hr_travel_extend.action_travel_request_custom" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_travel_extend/static/src/img/travel.svg"/>
                                            </div>
                                            <div class="button-text">Travel Request</div>
                                            <div class="menu-arrow">
                                                <span class="arrow is-triangle arrow-bar is-right"></span>
                                            </div>
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-2 d-flex flex-column m-top-1">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12 col-12">
                                        <button
                                            name="action_none"
                                            type="object"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_travel_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Return</div>
                                            <div class="menu-arrow-up-right">
                                                <span class="arrow is-triangle arrow-bar is-up-right"></span>
                                            </div>
                                        </button>
                                    </div>

                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <div class="menu-arrow-up">
                                            <span class="arrow is-triangle arrow-bar is-up"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-12 col-sm-12 col-12">
                                        <button name="bi_employee_travel_managment.action_travel_req_hr" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_travel_extend/static/src/img/approval.svg"/>
                                            </div>
                                            <div class="button-text">Approval</div>
                                            <div class="menu-arrow-up-right">
                                                <span class="arrow is-triangle arrow-bar is-up-right"></span>
                                            </div>
                                            <div class="menu-arrow-down-right">
                                                <span class="arrow is-triangle arrow-bar is-down-right"></span>
                                            </div>
                                        </button>
                                    </div>

                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <div class="menu-arrow-down">
                                            <span class="arrow is-triangle arrow-bar is-down"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-12 col-sm-12 col-12">
                                        <button name="equip3_hr_travel_extend.action_travel_cancel_custom" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_travel_extend/static/src/img/travel.svg"/>
                                            </div>
                                            <div class="button-text">Travel Cancellation</div>
                                        </button>
                                    </div>

                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <div class="menu-arrow-down">
                                            <span class="arrow is-triangle arrow-bar is-down"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-12 col-sm-12 col-12">
                                        <button name="equip3_hr_travel_extend.action_travel_cancel_approve" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_travel_extend/static/src/img/approval.svg"/>
                                            </div>
                                            <div class="button-text">Approval</div>
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-2 d-flex flex-column m-top">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12 col-12">
                                        <button name="equip3_hr_expense_extend.action_hr_expense_sheet_my_all_custom" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_travel_extend/static/src/img/my-expenses.svg"/>
                                            </div>
                                            <div class="button-text">Expense Created</div>
                                        </button>
                                    </div>

                                    <div class="col-md-12 col-sm-12 col-12">
                                        <button name="equip3_hr_travel_extend.action_hr_travel_view_view_report" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_travel_extend/static/src/img/reporting.svg"/>
                                            </div>
                                            <div class="button-text">Travel Analysis</div>
                                        </button>
                                    </div>

                                    <div class="col-md-12 col-sm-12 col-12">
                                        <button name="equip3_hr_cash_advance.action_account_cash_advance_approve_custom" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_travel_extend/static/src/img/my-cash-advance.svg"/>
                                            </div>
                                            <div class="button-text">Cash Advance Created</div>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </field>
    </record>

    <record id="hr_travel_flow_action" model="ir.actions.act_window">
        <field name="name">hr.travel.flow.action</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.travel.flow</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
            </p><p>
            </p>
        </field>
    </record>

    <record id="travel_flow_action_client" model="ir.actions.client">
        <field name="name">Travel Flow</field>
        <field name="tag">travel_flow_tag</field>
    </record>

    <menuitem id="travel_flow_sub_menu" name="Travel Flow" sequence="-1"
                  parent="bi_employee_travel_managment.travel_main_menu"
                  action="equip3_hr_travel_extend.travel_flow_action_client"/>

</odoo>
