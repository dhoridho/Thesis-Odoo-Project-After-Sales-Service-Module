<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="equip3_hr_travel_extend_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.equip3_hr_travel_extend</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Travel Approval" string="Travel Approval"
                         data-key="equip3_hr_travel_extend">
                    <p>
                        <h3 style="text-indent: 15px;">Travel</h3>

                    </p>
                    <h2>Travel Settings</h2>
                    <div class="row mt16 o_settings_container" name="travel_approval_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="travel_approval_control_setting"
                             title="Travel Approval">
                            <div class="content-group">
                                <div class="o_setting_left_pane">
                                    <field name="travel_approval_matrix"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label string="Travel Approval Matrix" for="travel_approval_matrix"/>
                                    <div class="text-muted">
                                        On/Off switch for approval matrix on Travel Request and Travel Cancellation
                                    </div>
                                </div>
                                <div attrs="{'invisible': [('travel_approval_matrix', '!=', True)]}">
                                    <div class="mt16">
                                        <label for="travel_type_approval" string="Approval Method"/>
                                        <field style="margin-left:10px;" name="travel_type_approval" class="oe_inline" required="1"/>
                                    </div>
                                    <div class="mt16" attrs="{'invisible':[('travel_type_approval','!=','employee_hierarchy')]}">
                                        <label for="travel_level" string="Approval Levels"/>
                                        <field style="margin-left:16px;" name="travel_level" class="oe_inline" required="1"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Update Attendance Status to Travel Scheduler Setting</h2>
                    <div class="row mt16 o_settings_container" id="update_attendance_status_travel_scheduler">
                        <div class="col-12 col-lg-6 o_setting_box" id="update_attendance_status_travel_scheduler_settings">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Update Attendance Status to Travel Limit</span>
                                <div class="text-muted">
                                    The value of this field will be a limitation parameter in the Update Attendance Status to Travel Scheduler to retrieve data that is past the day.
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <field name="update_attendance_status_travel_limit" required="1"/>
                                        <label for="update_attendance_status_travel_limit" class="col-lg-3 o_light_label oe_inline" string="Days"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Notification</h2>
                    <div class="row mt16 o_settings_container" name="travel_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box"
                             id="equip3_hr_travel_extend.travel_notification_wa_setting">
                            <div class="o_setting_left_pane">
                                <field name="send_by_wa_travel"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Send By Whatsapp" for="send_by_wa_travel"/>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container"
                         name="equip3_hr_travel_extend.whatsapp_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box"
                             id="equip3_hr_travel_extend.notification_email_setting">
                            <div class="o_setting_left_pane">
                                <field name="send_by_email_travel"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Send By Email" for="send_by_email_travel"/>
                            </div>
                        </div>
                    </div>

                        <!-- Auto Email Follow Cron-->
                        <div class="row mt16 o_settings_container" name="auto_follow_up_travel">
                            <div class="col-12 col-lg-6 o_setting_box" id="auto_follow_up_travel_setting">
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="auto_follow_up_travel"/>
                                        <label for="auto_follow_up_travel" string="Auto Follow Up" class="oe_inline"
                                               style="margin-left:10px;"/>
                                    </div>
                                    <div class="mt16" attrs="{'invisible':[('auto_follow_up_travel','!=',True)]}">
                                        <label for="interval_number_travel" string="Execute Every"/>
                                        <div attrs="{'invisible':[('auto_follow_up_travel','!=',True)]}">
                                            <field name="interval_number_travel" class="oe_inline"
                                                   attrs="{'required':[('auto_follow_up_travel','=',True)]}"/>
                                            <field name="interval_type_travel" class="oe_inline"
                                                   attrs="{'required':[('auto_follow_up_travel','=',True)]}"/>
                                        </div>
                                    </div>
                                    <div class="mt16" attrs="{'invisible':[('auto_follow_up_travel','!=',True)]}">
                                        <label for="number_of_repetitions_travel" string="Number of Repetitions"/>
                                        <field name="number_of_repetitions_travel" class="oe_inline"
                                               attrs="{'required':[('auto_follow_up_travel','=',True)]}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="equip3_hr_travel_approval_config_settings_action" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'equip3_hr_travel_extend', 'bin_size': False}</field>
        </record>

        <menuitem id="menu_hr_travel_conf_settings" name="Configuration"
                  parent="bi_employee_travel_managment.travel_main_menu"
                  groups="equip3_hr_employee_access_right_setting.group_hr_travel_manager"/>
        <menuitem id="menu_hr_travel_global_settings" name="Settings"
                  parent="menu_hr_travel_conf_settings"
                  action="equip3_hr_travel_approval_config_settings_action"
                  groups="base.group_system"/>
    </data>
</odoo>
