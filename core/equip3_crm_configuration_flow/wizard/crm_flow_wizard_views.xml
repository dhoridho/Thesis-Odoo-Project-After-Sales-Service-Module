<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="crm_configuration_flow_view_form" model="ir.ui.view">
        <field name="name">crm.configuration.flow.view.form</field>
        <field name="model">crm.flow.wizard</field>
        <field name="arch" type="xml">
            <form string="CRM Configuration Flow">
                <script>
                    $(".o_control_panel").remove();
                </script>
                <sheet>
                    <h1>CRM Flow</h1>
                    <br/><br/>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-1 mr-5">
                                <br/><br/><br/><br/>
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="button_follow_ups_type" type="object" class="btn btn-secondary" width="95" height="95">
                                        <img src="/equip3_crm_configuration_flow/static/src/img/follow-ups.svg" width="30"/>
                                        <br/>
                                        Follow Ups Type
                                    </button>
                                </div>
                                <br/><br/>
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="button_meetings_type" type="object" class="btn btn-secondary" width="95" height="95">
                                        <img src="/equip3_crm_configuration_flow/static/src/img/meetings-type.svg" width="30"/>
                                        <br/>
                                        Meetings Type
                                    </button>
                                </div>
                                <br/><br/>
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="button_leads_type" type="object" class="btn btn-secondary" width="95" height="95">
                                        <img src="/equip3_crm_configuration_flow/static/src/img/leads-type.svg" width="30"/>
                                        <br/>
                                        Leads Type
                                    </button>
                                </div>
                            </div>
                            <div class="col-1">
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="button_sales_teams" type="object" class="btn btn-secondary" width="95" height="95">
                                        <img src="/equip3_crm_configuration_flow/static/src/img/sales-teamm.svg" width="30"/>
                                        <br/>
                                        Sales Teams
                                    </button>
                                </div>
                                <br/><br/>
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="button_stages" type="object" class="btn btn-secondary" width="95" height="95">
                                        <img src="/equip3_crm_configuration_flow/static/src/img/stages.svg" width="30"/>
                                        <br/>
                                        Stages
                                    </button>
                                </div>
                                <br/><br/>
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="button_tags" type="object" class="btn btn-secondary" width="95" height="95">
                                        <img src="/equip3_crm_configuration_flow/static/src/img/tags.svg" width="30"/>
                                        <br/>
                                        Tags
                                    </button>
                                </div>
                                <br/><br/>
                                <div class="row-1 m-0 p-0 text-center">
                                    <button name="button_lost_reasons" type="object" class="btn btn-secondary" width="95" height="95">
                                        <img src="/equip3_crm_configuration_flow/static/src/img/lost-reasons.svg" width="30"/>
                                        <br/>
                                        Lost Reasons
                                    </button>
                                </div>
                            </div>
                            <div class="col-1 mr-10">
                            </div>
                            <div class="col-1 m-0 my-auto p-0 text-center">
                                <button name="button_leads" type="object" class="btn btn-secondary" width="95" height="95">
                                    <img src="/equip3_crm_configuration_flow/static/src/img/leads.svg" width="30"/>
                                    <br/>
                                    Leads
                                </button>
                            </div>
                            <div class="col-1 m-0 my-auto p-0 text-center">
                                <div class="row-1 m-0 my-auto p-0 align-items-end">
                                    <button name="button_leads" type="object" class="p-0" disabled="disabled">
                                        <i class="fa fa-arrow-right" style="font-size:4rem; transform:rotate(-45deg);"/>
                                    </button>
                                </div>
                                <br/>
                                <div class="row-1 m-0 my-auto p-0 align-items-end">
                                    <button name="button_leads" type="object" class="p-0" disabled="disabled">
                                        <i class="fa fa-arrow-right" style="font-size:4rem;"/>
                                    </button>
                                </div>
                                <br/>
                                <div class="row-1 m-0 my-auto p-0 align-items-end">
                                    <button name="button_leads" type="object" class="p-0" disabled="disabled">
                                        <i class="fa fa-arrow-right" style="font-size:4rem; transform:rotate(+45deg);"/>
                                    </button>
                                </div>
                            </div>
                            <div class="col-1 m-0 my-auto p-0 text-center">
                                <div class="row-1 m-0 my-auto p-0 align-items-end">
                                    <button name="button_follow_ups" type="object" class="btn btn-secondary" width="95" height="95">
                                        <img src="/equip3_crm_configuration_flow/static/src/img/follow-ups-1.svg" width="30"/>
                                        <br/>
                                        Follow Ups
                                    </button>
                                </div>
                                <br/><br/><br/>
                                <div class="row-1 m-0 my-auto p-0 align-items-end">
                                    <button name="button_quotations" type="object" class="btn btn-secondary" width="95" height="95">
                                        <img src="/equip3_crm_configuration_flow/static/src/img/quotations.svg" width="30"/>
                                        <br/>
                                        Quotations
                                    </button>
                                </div>
                                <br/><br/><br/>
                                <div class="row-1 m-0 my-auto p-0 align-items-end">
                                    <button name="button_meeting" type="object" class="btn btn-secondary" width="95" height="95">
                                        <img src="/equip3_crm_configuration_flow/static/src/img/meetings.svg" width="30"/>
                                        <br/>
                                        Meeting
                                    </button>
                                </div>
                            </div>
                            <div class="col-1 m-0 my-auto p-0 text-center">
                                <div class="row-1 m-0 my-auto p-0 align-items-end">
                                    <button name="button_leads" type="object" class="p-0" disabled="disabled">
                                        <i class="fa fa-arrow-right" style="font-size:4rem;"/>
                                    </button>
                                </div>
                            </div>
                            <div class="col-1 m-0 my-auto p-0 text-center">
                                <button name="button_sales_orders" type="object" class="btn btn-secondary" width="95" height="95">
                                        <img src="/equip3_crm_configuration_flow/static/src/img/sales-order.svg" width="30"/>
                                        <br/>
                                        Sales Orders
                                </button>
                            </div>
                            <div class="col-1 mr-10">
                            </div>
                            <div class="col-1 m-0 my-auto p-0 text-center">
                                <button name="button_reporting" type="object" class="btn btn-secondary" width="95" height="95">
                                    <img src="/equip3_crm_configuration_flow/static/src/img/reporting.svg" width="30"/>
                                    <br/>
                                    Reporting
                                </button>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="crm_configuration_flow_action" model="ir.actions.act_window">
        <field name="name">crm.configuration.flow.action</field>
        <field name="res_model">crm.flow.wizard</field>
        <field name="view_mode">form</field>
    </record>

    <record id="crm_configuration_flow_action_client" model="ir.actions.client">
        <field name="name">CRM Flow</field>
        <field name="tag">crm_configuration_flow_tag</field>
    </record>

    <menuitem
        id="crm_configuration_flow_menu"
        name="CRM Flow"
        action="crm_configuration_flow_action_client"
        parent="crm.crm_menu_root"
        sequence="1"/>

    <record id="equip3_crm_configuration_flow.crm_configuration_flow_menu" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-main-flow</field>
    </record>
</odoo>