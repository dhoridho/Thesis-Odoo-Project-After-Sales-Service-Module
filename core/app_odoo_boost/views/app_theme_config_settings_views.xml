<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_app_odoo_boost_config" model="ir.ui.view">
            <field name="name">Hashmicro App Boost Settings</field>
            <field name="model">res.config.settings</field>
            <field name="priority">21</field>
            <field name="arch" type="xml">
                <form string="Hashmicro App Boost Settings" class="oe_form_configuration">
                    <header>
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        <button string="Cancel" type="object" name="cancel" class="oe_link" special="cancel"/>
                    </header>
                    <group string="Communicate">
                        <div class="row mt16 o_settings_container" name="app_bus_setting">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="group_enable_discuss"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="group_enable_discuss"/>
                                    <span class="fa fa-lg fa-building-o" title="Values set here are company-specific."
                                          aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                                    <div class="text-muted">
                                        Uncheck to Disable odoo IM(instant message). Uncheck to make odoo speed up.
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="group_disable_poll"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="group_disable_poll"/>
                                    <span class="fa fa-lg fa-building-o" title="Values set here are company-specific."
                                          aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                                    <div class="text-muted">
                                        Check to Disable poll, so you can not receive push message. Check to make odoo speed up.
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="app_stop_subscribe"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="app_stop_subscribe"/>
                                    <div class="text-muted">
                                        Check to stop subscribe and follow. Check to make odoo speed up.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_app_boost_config" model="ir.actions.act_window">
            <field name="name">Boost Speed</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_app_odoo_boost_config"/>
            <field name="target">inline</field>
        </record>

        <menuitem
                id="menu_app_boost_config"
                parent="base.menu_custom"
                sequence="999"
                action="action_app_boost_config"
                groups="base.group_no_one"/>
    </data>
</odoo>
