<?xml version="1.0"?>
<odoo>
    <data noupdate="1">
        <record id="group_enable_discuss" model="res.groups">
            <field name="name">Enable Discuss</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>
        <record id="group_disable_poll" model="res.groups">
            <field name="name">Disable odoo bus for poll</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>
        <!--系统设置默认值-->
        <!--1 所有用户默认有im，无poll-->
        <record id="base.group_user" model="res.groups">
            <field name="implied_ids"
                   eval="[(4, ref('app_odoo_boost.group_enable_discuss')),
                   (4, ref('app_odoo_boost.group_disable_poll'))]"/>
        </record>
    </data>
</odoo>