                    <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': ['|', ('inventory', '=', False), ('accounting', '=', False)]}">
                        <div class="o_setting_left_pane">
                            <field name="is_inventory_adjustment_with_value"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_inventory_adjustment_with_value"/>
                            <div class="text-muted">
                                Accounting Inventory Adjustment
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('inventory', '=', False)]}">
                        <div class="o_setting_left_pane">
                            <field name="putaway_max_capacity"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="putaway_max_capacity"/>
                            <div class="text-muted">
                                Putaway incoming product when the location is on maximum capacity
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('inventory', '=', False)]}">
                        <div class="o_setting_left_pane">
                            <field name="group_is_three_dimension_warehouse"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="group_is_three_dimension_warehouse"/>
                            <div class="text-muted">
                                Set the 3-Dimension Warehouse and Location
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('inventory', '=', False)]}">
                        <div class="o_setting_left_pane">
                            <field name="is_mbs_on_transfer_operations"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_mbs_on_transfer_operations"/>
                            <div class="text-muted">
                                Show Mobile Barcode Scanner on Transfer Operations
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('inventory', '=', False)]}">
                        <div class="o_setting_left_pane">
                            <field name="is_mbs_on_product_usage"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_mbs_on_product_usage"/>
                            <div class="text-muted">
                                Show Mobile Barcode Scanner on Product Usage
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('inventory', '=', False)]}">
                        <div class="o_setting_left_pane">
                            <field name="is_mbs_on_stock_count_and_inventory_adjustment"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_mbs_on_stock_count_and_inventory_adjustment"/>
                            <div class="text-muted">
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('inventory', '=', False)]}">
                        <div class="o_setting_left_pane">
                            <field name="is_mbs_on_itr_location"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_mbs_on_itr_location"/>
                            <div class="text-muted">
                                Show Mobile Barcode Scanner Source &amp; Destination Location on Internal Transfer
                            </div>
                        </div>
                    </div>
                    
<!--                    <div class="col-12 col-lg-6 o_setting_box">-->
<!--                        <div class="o_setting_left_pane">-->
<!--                            <field name="is_product_barcode_labels"/>-->
<!--                        </div>-->
<!--                        <div class="o_setting_right_pane">-->
<!--                            <label for="is_product_barcode_labels"/>-->
<!--&lt;!&ndash;                            <div class="text-muted">&ndash;&gt;-->
<!--&lt;!&ndash;                                Using a Return Request form to return received/delivered products&ndash;&gt;-->
<!--&lt;!&ndash;                            </div>&ndash;&gt;-->
<!--                        </div>-->
<!--                    </div>-->
                </div>
            </xpath>


        </field>
    </record>

