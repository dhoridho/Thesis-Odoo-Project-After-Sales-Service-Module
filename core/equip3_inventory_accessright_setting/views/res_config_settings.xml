<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="form_res_config_settings_view_sale_stock_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.form.view.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="equip3_general_setting.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='inventory']/../.." position="after">
                <div class="col-xs-12 o_setting_box" attrs="{'invisible': [('inventory', '=', False)]}">
                    <div class="o_setting_left_pane">
                        <field name="is_material_request_approval_matrix"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="is_material_request_approval_matrix"/>
                        <div class="text-muted">
                            Set the Material Request Approval Matrix
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('inventory', '=', False)]}">
                    <div class="o_setting_left_pane">
                        <field name="is_stock_count_approval"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="is_stock_count_approval"/>
                        <div class="text-muted">
                            Set the Stock Count Approval Matrix
                        </div>
                    </div>
                </div>
                <div class="o_setting_box" attrs="{'invisible': [('inventory', '=', False)]}">
                    <div class="o_setting_left_pane">
                        <field name="is_product_usage_approval"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="is_product_usage_approval"/>
                        <div class="text-muted">
                            Set the Product Usage Approval Matrix
                        </div>
                    </div>
                    <div class="o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_adj_picking"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_adj_picking"/>
                            <div class="text-muted">
                                Edit the Demand &amp; Done Qty in Delivery Order &amp; Receiving Notes
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-6 o_setting_box" attrs="{'invisible': [('inventory', '=', False)]}">
                        <div class="o_setting_left_pane">
                            <field name="is_receiving_notes_approval_matrix"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_receiving_notes_approval_matrix"/>
                            <div class="text-muted">
                                Set the Receiving Notes Approval Matrix
                            </div>
                        </div>
                </div>

                <div class="col-lg-6 o_setting_box" attrs="{'invisible': [('inventory', '=', False)]}">
                        <div class="o_setting_left_pane">
                            <field name="is_delivery_order_approval_matrix"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_delivery_order_approval_matrix"/>
                            <div class="text-muted">
                                Set the Delivery Order Approval Matrix
                            </div>
                        </div>
                </div>
            </xpath>
            <xpath expr="//field[@name='inventory']/../../.." position="after">
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('inventory', '=', False)]}">
                        <div class="o_setting_left_pane">
                            <field name="is_internal_transfer_approval_matrix"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_internal_transfer_approval_matrix"/>
                            <div class="text-muted">
                                Set the Interwarehouse Transfer Request Approval Matrix
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('inventory', '=', False)]}">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane ml-3">
                            <label for="internal_type"/>
                            <div class="text-muted">
                                Select the type of Operation
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="internal_type" class="o_light_label" widget="radio"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('inventory', '=', False)]}">
