<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="access_rights_profile_form_view" model="ir.ui.view">
        <field name="name">Access Rights Profile Form</field>
        <field name="model">access.rights.profile</field>
        <field name="arch" type="xml">
            <form string="Access Rights Profile">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="group_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="access_rights_profile_tree_view" model="ir.ui.view">
        <field name="name">Access Rights Profile Tree</field>
        <field name="model">access.rights.profile</field>
        <field name="arch" type="xml">
            <tree string="Access Rights Profile">
                <field name="name"/>
                <field name="group_ids"/>
            </tree>
        </field>
    </record>

    <record id="access_rights_profile_search" model="ir.ui.view">
        <field name="name">Access Rights Profile Search</field>
        <field name="model">access.rights.profile</field>
        <field name="arch" type="xml">
            <search string="Access Rights Profile">
                <field name="name"/>
                <field name="group_ids"/>
            </search>
        </field>
    </record>

    <record id="action_access_rights_profiles" model="ir.actions.act_window">
        <field name="name">Access Rights Profile</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">access.rights.profile</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_barcode_scanner">
            Click here to create a Access Rights Profile.
          </p>
        </field>
    </record>

    <menuitem 
    id="submenu_access_rights_profile" 
    name="Access Rights Profile" 
    parent="base.menu_users" 
    sequence="1" 
    action="action_access_rights_profiles" 
    groups="base.user_root"
    /> 

</odoo>
