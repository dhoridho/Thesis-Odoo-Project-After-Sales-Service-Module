<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_asset_budget_change_request_tree" model="ir.ui.view">
        <field name="name">view.asset.budget.change.request.tree</field>
        <field name="model">asset.budget.change.request</field>
        <field name="arch" type="xml">
            <tree string="Asset Budget Change Request">
                <field name="requester_id"/>
                <field name="asset_budget_id"/>
                <field name="branch_id"/>
                <field name="state" 
                attrs="{'decoration-success':'state == \'done\'','decoration-danger':'state == \'cancel\'','decoration-muted':'state == \'draft\'','decoration-primary':'state == \'confirm\'','decoration-success2':'state == \'validate\'','decoration-warning':'state == \'to_approve\'','decoration-danger2':'state == \'rejected\''}" />
            </tree>
        </field>
    </record>

    <record id="view_asset_budget_change_request_form" model="ir.ui.view">
        <field name="name">view.asset.budget.change.request.form</field>
        <field name="model">asset.budget.change.request</field>
        <field name="arch" type="xml">
            <form string="Asset Budget Change Request">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" states="draft" class="oe_highlight"/>
                    <!-- <button name="action_validate" string="Validate" type="object" states="confirm" class="oe_highlight"/> -->
                    <!-- <button name="action_done" string="Done" type="object" states="validate" class="oe_highlight"/> -->
                    <!-- <button name="action_reject" string="Reject" type="object" states="confirm"/> -->
                    <button name="action_cancel" string="Cancel" type="object" states="confirm,validate"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm"/>
                    <button string="Reset to Draft" name="action_budget_draft" states="cancel" type="object"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="requester_id" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="asset_budget_id" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="account_tag_ids" widget="many2many_tags" attrs="{'readonly':[('state','!=','draft')]}" required="1" />
                        </group>
                        <group>
                            <field name="date" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <label for="date_from" string="Period"/>
                            <div>
                                <field name="date_from" class="oe_inline"
                                       attrs="{'readonly':[('state','!=','draft')]}" required="1"/>
                                       -
                                <field name="date_to" class="oe_inline" attrs="{'readonly':[('state','!=','draft')]}"
                                       nolabel="1" required="1"/>
                            </div>
                            <field name="branch_id" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="company_id" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="asset_budget_change_request" string="Asset Budget Lines">
                            <field name="asset_budget_line_ids" attrs="{'readonly':[('state','!=','draft')]}" context="{'default_date_from':date_from, 'default_date_to':date_to, 'default_account_tag_ids':account_tag_ids}">
                                <tree string="Asset Budget Change Request Line" editable="bottom">
                                    <field name="asset_budgetary_position_id"/>
                                    <field name="account_tag_ids" widget="many2many_tags" />
                                    <field name="date_from" required="1"/>
                                    <field name="date_to" required="1"/>
                                    <field name="planned_amount" readonly="1" force_save="1" invisible="1"/>
                                    <field name="current_amount" readonly="1" force_save="1"/>
                                    <field name="new_amount" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="act_asset_budget_change_request" model="ir.actions.act_window">
        <field name="name">Asset Budget Change Request</field>
        <field name="res_model">asset.budget.change.request</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_asset_budget_change_request_tree"/>
    </record>

    <menuitem id="menu_asset_budget_change_request" name="Asset Budget Change Request" action="act_asset_budget_change_request" parent="menu_asset_budget" />
</odoo>