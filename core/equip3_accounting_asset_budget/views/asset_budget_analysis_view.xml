<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_asset_budget_analysis_tree" model="ir.ui.view">
        <field name="name">view.asset.budget.analysis.tree</field>
        <field name="model">asset.budget.accounting.line</field>
        <field name="arch" type="xml">
            <tree string="Asset Budget Analysis" create="false">
                <field name="asset_budget_id" optional="show"/>
                <field name="asset_budgetary_position_id"/>
                <field name="account_tag_ids" widget="many2many_tags" optional="show"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="planned_amount"/>
                <field name="carry_over_amount"/>
                <field name="transfer_amount" />
                <field name="change_request_amount"/>
                <field name="used_amount"/>
                <field name="remaining_amount"/>
            </tree>
        </field>
    </record>

    <record id="view_asset_budget_analysis_pivot" model="ir.ui.view">
        <field name="name">view.asset.budget.analysis.pivot</field>
        <field name="model">asset.budget.accounting.line</field>
        <field name="arch" type="xml">
            <pivot string="Asset Budget Analysis">
                <field name="asset_budget_id" type="row" />
                <field name="planned_amount" type="measure" />
                <field name="carry_over_amount" type="measure" />
                <field name="transfer_amount" type="measure" />
                <field name="change_request_amount" type="measure"/>
                <field name="used_amount_check" type="measure"/>
                <field name="remaining_amount_check" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="view_asset_budget_analysis_graph" model="ir.ui.view">
        <field name="name">view.asset.budget.analysis.pivotgraph</field>
        <field name="model">asset.budget.accounting.line</field>
        <field name="arch" type="xml">
            <graph string="Asset Budget Analysis">
                <field name="asset_budget_id" type="row" />
                <field name="planned_amount" type="measure" />
                <field name="carry_over_amount" type="measure" />
                <field name="transfer_amount" type="measure" />
                <field name="change_request_amount" type="measure" />
                <field name="used_amount_check" type="measure" />
                <field name="remaining_amount" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="act_asset_budget_analysis" model="ir.actions.act_window">
        <field name="name">Asset Budget Analysis</field>
        <field name="res_model">asset.budget.accounting.line</field>
        <field name="view_mode">tree,form,pivot,graph</field>
        <field name="view_id" eval="False"/>
    </record>

    <menuitem id="menu_asset_budget_analysis" name="Asset Budget Analysis" action="act_asset_budget_analysis" parent="equip3_accounting_budget.menu_budget_report" sequence="3"/>

</odoo>
