<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_asset_budget_tree" model="ir.ui.view">
        <field name="name">view.asset.budget.tree</field>
        <field name="model">asset.budget.accounting</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="branch_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="amount_budget"/>
                <field name="amount_used"/>
                <field name="amount_remaining"/>
                <field name="parent_id"/>
                <field name="state" widget="badge" decoration-success="state == 'done'" decoration-danger="state == 'cancel'" decoration-muted="state == 'draft'" decoration-primary="state == 'confirm'" decoration-success2="state == 'validate'" decoration-warning="state == 'to_approve'" decoration-danger2="state == 'rejected'"/>
            </tree>
        </field>
    </record>

    <record id="view_asset_budget_form" model="ir.ui.view">
        <field name="name">view.asset.budget.form</field>
        <field name="model">asset.budget.accounting</field>
        <field name="arch" type="xml">
            <form string="Asset Budget">
                <header>
                    <!-- <button name="request_approval" string="Request Approval" type="object" states="draft"/> -->
                    <button name="action_confirm" string="Confirm" type="object" states="draft" class="oe_highlight"/>
                    <!-- <button name="action_approve" string="Approve" type="object" states="to_approve"/> -->
                    <button name="action_validate" string="Validate" type="object" states="confirm" class="oe_highlight"/>
                    <button name="action_done" string="Done" type="object" states="validate" class="oe_highlight"/>
                    <button name="action_reject" string="Reject" type="object" states="confirm"/>
                    <button name="action_cancel" string="Cancel" type="object" states="confirm,validate"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,validate,done,cancel"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" attrs="{'readonly':[('state','!=','draft')]}" placeholder="Asset Budget Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <!-- <field name="is_parent_budget"/>
                            <field name="parent_id"/> -->
                            <field name="account_tag_ids" widget="many2many_tags" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                        <group>
                             <label for="date_from" string="Period"/>
                            <div>
                                <field name="date_from" class="oe_inline"
                                       attrs="{'readonly':[('state','!=','draft')]}"/>
                                -
                                <field name="date_to" class="oe_inline" attrs="{'readonly':[('state','!=','draft')]}"
                                       nolabel="1"/>
                            </div>
                            <field name="company_id" readonly="1"/>
                            <field name="branch_id" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="asset_budget_line" string="Asset Budget Line">
                            <field name="asset_budget_line_ids" context="{'default_date_from': date_from,'default_date_to': date_to,'default_account_tag_ids': account_tag_ids}"
                                       nolabel="1" attrs="{'readonly':[('state','!=','draft')]}">
                                <tree string="Asset Budget Line" editable="bottom">
                                    <field name="asset_budgetary_position_id"/>
                                    <field name="account_tag_ids" widget="many2many_tags"/>
                                    <field name="date_from"/>
                                    <field name="date_to"/>
                                    <field name="planned_amount"/>
                                    <field name="carry_over_amount"/>
                                    <field name="transfer_amount"/>
                                    <field name="change_request_amount"/>
                                    <field name="budget_amount"/>
                                    <field name="used_amount"/>
                                    <field name="remaining_amount"/>
                                    <button type="object" name="action_open_asset_budget_entries" string="Entries..."
                                                icon="fa-arrow-circle-o-right"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                     <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_asset_budget_kanban" model="ir.ui.view">
        <field name="name">view.asset.budget.kanban</field>
        <field name="model">asset.budget.accounting</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <field name="name"/>
                            <!-- Add more fields or elements here as needed -->
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="act_asset_budget_view" model="ir.actions.act_window">
        <field name="name">Asset Budgets</field>
        <field name="res_model">asset.budget.accounting</field>
        <field name="view_mode">tree,form,kanban</field>
        <!-- <field name="view_id" ref="view_asset_budget_tree"/> -->
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new asset budget.
            </p>
        </field>
    </record>

    <menuitem id="account_asset_budget" name="Asset Budgets" action="act_asset_budget_view" sequence="1" parent="menu_asset_budget"/>
</odoo>