<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="project_budget_flow_wizard_view_form" model="ir.ui.view">
        <field name="name">project.budget.flow.wizard.view.form</field>
        <field name="model">project.budget.flow.wizard</field>
        <field name="arch" type="xml">
            <form string="Project Budget Flow">
                <script>
                    $(".o_control_panel").remove();
                </script>
                <sheet>
                    <div class="equip3_cons_flow_menu">
                        <div class="main">
                            <button class="header accordion-action" data-target="accordion-content-1">
                                <h2 class="title">Master Data</h2>
                            </button>
                            <div id="accordion-content-1" class="accordion-wrapper">
                                <div class="action__area">
                                    <button name="button_add_product" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_project_budget/product.svg"/>
                                        <span>Product</span>
                                    </button>
                                    <button name="button_group_of_product" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_project_budget/goup-of-product.svg"/>
                                        <span>Group of Product</span>
                                    </button>
                                    <button name="button_uom" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_project_budget/unit-of-measure.svg"/>
                                        <span>Unif of Measure</span>
                                    </button>
                                    <button name="button_variable" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_project_budget/variable.svg"/>
                                        <span>Variable</span>
                                    </button>
                                    <button name="button_job_subcon" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_project_budget/subcon-estimate.svg"/>
                                        <span>Job Subcon Estimate</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="main">
                            <button class="header accordion-action" data-target="accordion-content-2">
                                <h2 class="title">Flow</h2>
                            </button>
                            <div id="accordion-content-2" class="accordion-wrapper">
                                <div class="flow__area">
                                    <div class="item__wrapper__col">
                                        <button name="button_cost_sheet" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_project_budget/cost-sheet.svg" width="50"/>
                                            <span>Cost Sheet</span>
                                        </button>
                                    </div>
                                    <div class="connector__wrapper__col">
                                        <span class="line__connect" style="width: 131%; transform:rotate(-40deg)"></span>
                                        <span class="line__connect"></span>
                                        <span class="line__connect" style="width: 131%; transform:rotate(40deg)"></span>
                                    </div>
                                    <div class="item__wrapper__col">
                                        <button name="button_project_budget_transfer" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_project_budget/project-budget-transfer.svg" width="50"/>
                                            <span>Project Budget Transfer</span>
                                        </button>
                                        <button name="button_budget_change_request" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_project_budget/budget-change-request.svg" width="50"/>
                                            <span>Budget Change Request</span>
                                        </button>
                                        <button name="button_project_budget" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_project_budget/project-budget.svg" width="50"/>
                                            <span>Project Budget</span>
                                        </button>
                                    </div>
                                    <div class="connector__wrapper__col">
                                        <span class="line__connect" style="top: 88%; width: 131%; transform: rotate(-40deg);"></span>
                                        <span class="line__connect" style="top: 88%;"></span>
                                    </div>
                                    <div class="item__wrapper__col">
                                        <span class="item item__hide" style="height: 73px;"></span>
                                        <button name="button_budget_transfer" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_project_budget/budget-transfer.svg" width="50"/>
                                            <span>Budget Transfer</span>
                                        </button>
                                        <button name="button_budget_change_request" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_project_budget/budget-change-request.svg" width="50"/>
                                            <span>Budget Change Request</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="main">
                            <button class="header accordion-action" data-target="accordion-content-3">
                                <h2 class="title">Reporting</h2>
                            </button>
                            <div id="accordion-content-3" class="accordion-wrapper">
                                <div class="action__area">
                                    <button name="button_cost_progress" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_project_budget/cost-progress-analysis.svg"/>
                                        <span>Cost Progress Analysis</span>
                                    </button>
                                    <button name="button_scurve" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_project_budget/scurve.svg"/>
                                        <span>S-Curve</span>
                                    </button>
                                    <button name="button_gantt_chart" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_project_budget/gantt-chart.svg"/>
                                        <span>Gantt Chart</span>
                                    </button>
                                    <button name="button_issue_analysis" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_project_budget/issue-analysis.svg"/>
                                        <span>Issue Analysis</span>
                                    </button>
                                    <button name="button_project_progress" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_project_budget/project-progres-report.svg"/>
                                        <span>Project Progress Report</span>
                                    </button>
                                    <button name="button_claim_customer" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_project_budget/reporting.svg"/>
                                        <span>Progressive Claim Customer</span>
                                    </button>
                                    <button name="button_claim_subcon" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_project_budget/material_usage_report.svg"/>
                                        <span>Progressive Claim Subcon</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="project_budget_flow_wizard_action" model="ir.actions.act_window">
        <field name="name">Project Budget Flow</field>
        <field name="res_model">project.budget.flow.wizard</field>
        <field name="view_mode">form</field>
    </record>

    <record id="project_budget_flow_wizard_action_client" model="ir.actions.client">
        <field name="name">Project Budget Flow</field>
        <field name="tag">tag_project_budget_flow</field>
    </record>

    <menuitem
        id="project_budget_flow_wizard_menu"
        name="Project Budget Flow"
        action="equip3_construction_reports.project_budget_flow_wizard_action_client"
        parent="abs_construction_management.construction_management"
        groups="equip3_construction_accessright_setting.group_construction_engineer"
        sequence="-4"/>

</odoo>
