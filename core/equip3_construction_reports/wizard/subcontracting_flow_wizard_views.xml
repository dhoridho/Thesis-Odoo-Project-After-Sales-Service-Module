<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="subcontracting_flow_wizard_view_form" model="ir.ui.view">
        <field name="name">subcontracting.flow.wizard.view.form</field>
        <field name="model">subcontracting.flow.wizard</field>
        <field name="arch" type="xml">
            <form string="Subcontracting Flow">
                <script>
                    $(".o_control_panel").remove();
                </script>
                <sheet>
                    <div class="equip3_cons_flow_menu">
                        <div class="main">
                            <button class="header accordion-action" data-target="accordion-content-1">
                                <h2 class="title">Master Data</h2>
                            </button>
                            <div id="accordion-content-1" class="accordion-wrapper">
                                <div class="action__area">
                                    <button name="button_vendor" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_subcontracting/vendor.svg"/>
                                        <span>Vendor</span>
                                    </button>
                                    <button name="button_vendor_pricelist" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_subcontracting/vendor-pricelist.svg"/>
                                        <span>Vendor Pricelist</span>
                                    </button>
                                    <button name="button_add_product" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_subcontracting/product.svg"/>
                                        <span>Product</span>
                                    </button>
                                    <button name="button_group_of_product" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_subcontracting/goup-of-product.svg"/>
                                        <span>Group of Product</span>
                                    </button>
                                    <button name="button_uom" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_subcontracting/unit-of-measure.svg"/>
                                        <span>Unif of Measure</span>
                                    </button>
                                    <button name="button_job_subcon" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_subcontracting/subcon-estimate.svg"/>
                                        <span>Job Subcon Estimate</span>
                                    </button>
                                    <button name="button_tax" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_subcontracting/tax.svg"/>
                                        <span>Tax</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="main">
                            <button class="header accordion-action" data-target="accordion-content-2">
                                <h2 class="title">Flow</h2>
                            </button>
                            <div id="accordion-content-2" class="accordion-wrapper">
                                <div class="flow__area">
                                    <div class="item__wrapper__col">
                                        <button name="button_cost_sheet" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_subcontracting/cost-sheet.svg" width="50"/>
                                            <span>Cost Sheet</span>
                                        </button>
                                        <span class="item item__hide" style="height: 45px;"></span>
                                        <button name="button_project_budget" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_subcontracting/project-budget.svg" width="50"/>
                                            <span>Project Budget</span>
                                        </button>
                                    </div>
                                    <div class="connector__wrapper__col">
                                        <span class="line__connect" style="top: 13%; width: 131%; transform: rotate(40deg)"></span>
                                        <span class="line__connect" style="top: 87%; width: 131%; transform: rotate(-40deg)"></span>
                                    </div>
                                    <div class="item__wrapper__col">
                                        <button name="button_subcon_purchase_request" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_subcontracting/subcon-purchase-request.svg" width="50"/>
                                            <span>Subcon Purchase Request</span>
                                        </button>
                                    </div>
                                    <div class="connector__wrapper__col">
                                        <span class="line__connect"></span>
                                    </div>
                                    <div class="item__wrapper__col">
                                        <button name="button_purchase_agreement" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_subcontracting/purchase-agreement.svg" width="50"/>
                                            <span>Purchase Agreement</span>
                                        </button>
                                    </div>
                                    <div class="connector__wrapper__col">
                                        <span class="line__connect"></span>
                                    </div>
                                    <div class="item__wrapper__col">
                                        <button name="button_request_for_quotation" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_subcontracting/request-for-quotation.svg" width="50"/>
                                            <span>Request for Quotation</span>
                                        </button>
                                    </div>
                                    <div class="connector__wrapper__col">
                                        <span class="line__connect"></span>
                                    </div>
                                    <div class="item__wrapper__col">
                                        <button name="button_purchase_order" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_subcontracting/purchase-order.svg" width="50"/>
                                            <span>Purchase Order</span>
                                        </button>
                                    </div>
                                    <div class="connector__wrapper__col">
                                        <span class="line__connect"></span>
                                    </div>
                                    <div class="item__wrapper__col">
                                        <button name="button_vendor_progressive_claim" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_subcontracting/vendor-progressive-claim.svg" width="50"/>
                                            <span>Vendor Progressive Claim</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="main">
                            <button class="header accordion-action" data-target="accordion-content-3">
                                <h2 class="title">Reporting</h2>
                            </button>
                            <div id="accordion-content-3" class="accordion-wrapper">
                                <div class="action__area">
                                    <button name="button_cost_progress" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_subcontracting/cost-progress-analysis.svg"/>
                                        <span>Cost Progress Analysis</span>
                                    </button>
                                    <button name="button_scurve" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_subcontracting/scurve.svg"/>
                                        <span>S-Curve</span>
                                    </button>
                                    <button name="button_gantt_chart" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_subcontracting/gantt-chart.svg"/>
                                        <span>Gantt Chart</span>
                                    </button>
                                    <button name="button_issue_analysis" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_subcontracting/issue-analysis.svg"/>
                                        <span>Issue Analysis</span>
                                    </button>
                                    <button name="button_project_progress" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_subcontracting/project-progres-report.svg"/>
                                        <span>Project Progress Report</span>
                                    </button>
                                    <button name="button_claim_customer" type="object" class="item">
                                        <span>Progressive Claim Customer</span>
                                    </button>
                                    <button name="button_claim_subcon" type="object" class="item">
                                        <span>Progressive Claim Subcon</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="subcontracting_flow_wizard_action" model="ir.actions.act_window">
        <field name="name">Subcontracting Flow</field>
        <field name="res_model">subcontracting.flow.wizard</field>
        <field name="view_mode">form</field>
    </record>

    <record id="subcontracting_flow_wizard_action_client" model="ir.actions.client">
        <field name="name">Subcontracting Flow</field>
        <field name="tag">tag_subcontracting_flow</field>
    </record>


    <menuitem
        id="subcontracting_flow_wizard_menu"
        name="Subcontracting Flow"
        action="equip3_construction_reports.subcontracting_flow_wizard_action_client"
        parent="equip3_purchase_operation.menu_purchase_services_goods"
        sequence="0"/>

    <record id="equip3_construction_reports.subcontracting_flow_wizard_menu" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-main-flow</field>
    </record>

</odoo>
