<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="construction_sale_flow_wizard_view_form" model="ir.ui.view">
        <field name="name">construction_sale_flow_wizard.view.form</field>
        <field name="model">construction.sale.flow.wizard</field>
        <field name="arch" type="xml">
            <form string="Construction Sales Flow" >
                <script>
                    $(".o_control_panel").remove();
                </script>
                <sheet>
                    <div class="equip3_cons_flow_menu">
                        <div class="main">
                            <button class="header accordion-action" data-target="accordion-content-1">
                                <h2 class="title">Master Data</h2>
                            </button>
                            <div id="accordion-content-1" class="accordion-wrapper">
                                <div class="action__area">
                                    <button name="button_customer" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_const_sale/customer.svg"/>
                                        <span>Customer</span>
                                    </button>
                                    <button name="button_add_product" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_const_sale/product.svg"/>
                                        <span>Product</span>
                                    </button>
                                    <button name="button_group_of_product" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_const_sale/goup-of-product.svg"/>
                                        <span>Group of Product</span>
                                    </button>
                                    <button name="button_uom" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_const_sale/unit-of-measure.svg"/>
                                        <span>Unif of Measure</span>
                                    </button>
                                    <button name="button_pricelist" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_const_sale/pricelist.svg"/>
                                        <span>Pricelist</span>
                                    </button>
                                    <button name="button_tax" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_const_sale/tax.svg"/>
                                        <span>Tax</span>
                                    </button>
                                    <button name="button_variable" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_const_sale/variable.svg"/>
                                        <span>Variable</span>
                                    </button>
                                    <button name="button_job_subcon" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_const_sale/subcon-estimate.svg"/>
                                        <span>Job Subcon Estimate</span>
                                    </button>
                                    <button name="button_estimate_template" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_const_sale/job-estimate-template.svg"/>
                                        <span>BOQ Template</span>
                                    </button>
                                    <button name="button_penalty" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_const_sale/penalty.svg"/>
                                        <span>Penalty</span>
                                    </button>
                                    <!-- <button name="button_job_estimate_approved" type="object" >
                                        <img src="/equip3_construction_reports/static/src/img/md_const_sale/milestone_and_contract_terms.png" />
                                        <span>Milestone and Contract Terms</span>
                                    </button> -->
                                    <button name="button_job_matrix" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_const_sale/job-estimate-approval-matrix.svg"/>
                                        <span>BOQ Approval Matrix</span>
                                    </button>
                                    <button name="button_contract_matrix" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_const_sale/contract-approval-matrix.svg"/>
                                        <span>Contract Approval Matrix</span>
                                    </button>
                                    <button name="button_overlimit_matrix" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_const_sale/customer-limit-approval-matrix.svg"/>
                                        <span>Customer Limit Approval Matrix</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="main">
                            <div class="header accordion-action" data-target="accordion-content-2">
                                <h2 class="title">Flow</h2>
                            </div>
                            <div id="accordion-content-2" class="accordion-wrapper">
                                <div class="flow__area">
                                    <div class="item__wrapper__col">
                                        <button name="button_job_estimate" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_const_sale/job-estimates.svg" width="50"/>
                                            <span>BOQ</span>
                                        </button>
                                    </div>
                                    <div class="connector__wrapper__col">
                                        <span class="line__connect"></span>
                                    </div>
                                    <div class="item__wrapper__col">
                                        <button name="button_job_estimate_approval" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_const_sale/sale=order-approval.svg" width="50"/>
                                            <span>BOQ Approval</span>
                                        </button>
                                    </div>
                                    <div class="connector__wrapper__col">
                                        <span class="line__connect"></span>
                                    </div>
                                    <div class="item__wrapper__col">
                                        <button name="button_job_estimate_approved" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_const_sale/job-estimates.svg" width="50"/>
                                            <span>BOQ Confirmed</span>
                                        </button>
                                    </div>
                                    <div class="connector__wrapper__col">
                                        <span class="line__connect"></span>
                                    </div>
                                    <div class="item__wrapper__col">
                                        <button name="button_quotation" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_const_sale/quotations.svg" width="50"/>
                                            <span>Quotations</span>
                                        </button>
                                    </div>
                                    <div class="connector__wrapper__col">
                                        <span class="line__connect" style="width: 106%; transform: rotate(-20deg);"></span>
                                        <span class="line__connect" style="width: 106%; transform: rotate(20deg);"></span>
                                    </div>
                                    <div class="item__wrapper__col">
                                        <button name="button_sale_order_approval" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_const_sale/sale=order-approval.svg" width="50"/>
                                            <span>Contract Approval</span>
                                        </button>
                                        <button name="button_over_limit_approval" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_const_sale/over-limit-approval.svg" width="50"/>
                                            <span>Over Limit Approval</span>
                                        </button>
                                    </div>
                                    <div class="connector__wrapper__col">
                                        <span class="line__connect" style="top: 28%; width: 106%; transform: rotate(20deg);"></span>
                                        <span class="line__connect" style="top: 72%; width: 106%; transform: rotate(-20deg);"></span>
                                    </div>
                                    <div class="item__wrapper__col">
                                        <button name="button_sales_order" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_const_sale/contract.svg" width="50"/>
                                            <span>Contracts</span>
                                        </button>
                                    </div>
                                    <div class="connector__wrapper__col">
                                        <span class="line__connect" style="width: 131%; transform: rotate(-40deg)"></span>
                                        <span class="line__connect"></span>
                                        <span class="line__connect" style="width: 131%; transform: rotate(34deg)"></span>
                                    </div>
                                    <div class="item__wrapper__col">
                                        <button name="button_project" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_const_sale/project.svg" width="50"/>
                                            <span>Projects</span>
                                        </button>
                                        <button name="button_cost_sheet" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_const_sale/cost-sheet.svg" width="50"/>
                                            <span>Cost Sheet</span>
                                        </button>
                                        <button name="button_progressive_claim" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_const_sale/progressive-claim.svg" width="50"/>
                                            <span>Progressive Claim</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="main">
                            <button class="header accordion-action" data-target="accordion-content-3">
                                <h2 class="title">Reporting</h2>
                            </button>
                            <div id="accordion-content-3" class="accordion-wrapper">
                                <div class="action__area">
                                    <button name="button_cost_progress" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_const_sale/cost-progress-analysis.svg"/>
                                        <span>Cost Progress Analysis</span>
                                    </button>
                                    <button name="button_scurve" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_const_sale/scurve.svg"/>
                                        <span>S-Curve</span>
                                    </button>
                                    <button name="button_gantt_chart" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_const_sale/gantt-chart.svg"/>
                                        <span>Gantt Chart</span>
                                    </button>
                                    <button name="button_issue_analysis" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_const_sale/issue-analysis.svg"/>
                                        <span>Issue Analysis</span>
                                    </button>
                                    <button name="button_project_progress" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_const_sale/project-progres-report.svg"/>
                                        <span>Project Progress Report</span>
                                    </button>
                                    <button name="button_claim_customer" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_const_sale/reporting.svg"/>
                                        <span>Progressive Claim Customer</span>
                                    </button>
                                    <button name="button_claim_subcon" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_const_sale/material_usage_report.svg"/>
                                        <span>Progressive Claim Subcon</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="construction_sale_flow_wizard_action" model="ir.actions.act_window">
        <field name="name">Construction Sales Flow</field>
        <field name="res_model">construction.sale.flow.wizard</field>
        <field name="view_mode">form</field>
    </record>

    <record id="construction_sale_configuration_flow_action_client" model="ir.actions.client">
        <field name="name">Construction Sales Flow</field>
        <field name="tag">construction_sale_configuration_flow_tag</field>
    </record>

    <menuitem
        id="construction_sale_flow_wizard_menu"
        name="Construction Sales Flow"
        action="construction_sale_configuration_flow_action_client"
        parent="sale.sale_menu_root"
        sequence="-3"/>
        
    <record id="equip3_construction_reports.construction_sale_flow_wizard_menu" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-main-flow</field>
    </record>

</odoo>
