<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="customer_progressive_claim_flow_wizard_view_form" model="ir.ui.view">
        <field name="name">customer.progressive.claim.flow.wizard.view.form</field>
        <field name="model">customer.progressive.claim.flow.wizard</field>
        <field name="arch" type="xml">
            <form string="Customer Progressive Claim Flow">
                <script>
                    $(".o_control_panel").remove();
                </script>
                <sheet>
                    <div class="equip3_cons_flow_menu">
                        <div class="main">
                            <button class="header accordion-action" data-target="accordion-content-1">
                                <h2 class="title">Master Data</h2>
                            </button>
                            <div id="accordion-content-1" class="accordion-wrapper">
                                <div class="action__area">
                                    <button name="button_customer" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_progressive_claim/customer.svg" />
                                        <span>Customer</span>
                                    </button>
                                    <button name="button_chart_account" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_progressive_claim/char-of-account.svg" />
                                        <span>Chart of Account</span>
                                    </button>
                                    <button name="button_fiscal_year" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_progressive_claim/fiscal-year.svg" />
                                        <span>Fiscal Year</span>
                                    </button>
                                    <button name="button_period" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_progressive_claim/period.svg" />
                                        <span>Period</span>
                                    </button>
                                    <button name="button_tax" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_progressive_claim/tax.svg"/>
                                        <span>Tax</span>
                                    </button>
                                    <button name="button_claim_approval" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_progressive_claim/claim-request-approval-matrix.svg" />
                                        <span>Claim Request Approval Matrix</span>
                                    </button>
                                    <button name="button_invoice_approval" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_progressive_claim/invoice-approval-matrix.svg" />
                                        <span>Invoice Approval Matrix</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="main">
                            <button class="header accordion-action" data-target="accordion-content-2">
                                <h2 class="title">Flow</h2>
                            </button>
                            <div id="accordion-content-2" class="accordion-wrapper">
                                <div class="flow__area">
                                    <div class="item__wrapper__col">
                                        <button name="button_progressive_claim" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_progressive_claim/progressive-claim.svg" width="50"/>
                                            <span>Progressive Claim</span>
                                        </button>
                                    </div>
                                    <div class="connector__wrapper__col">
                                        <span class="line__connect"></span>
                                    </div>
                                    <div class="item__wrapper__col">
                                        <button name="button_down_payment_invoice" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_progressive_claim/down-payment-invoice.svg" width="50"/>
                                            <span>Down Payment Invoice</span>
                                        </button>
                                    </div>
                                    <div class="connector__wrapper__col">
                                        <span class="line__connect"></span>
                                    </div>
                                    <div class="item__wrapper__col">
                                        <button name="button_claim_request" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_progressive_claim/claim-request.svg" width="50"/>
                                            <span>Claim Request</span>
                                        </button>
                                    </div>
                                    <div class="connector__wrapper__col">
                                        <span class="line__connect"></span>
                                    </div>
                                    <div class="item__wrapper__col">
                                        <button name="button_progress_invoice" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_progressive_claim/progress-invoice.svg" width="50"/>
                                            <span>Progress Invoice</span>
                                        </button>
                                    </div>
                                    <div class="connector__wrapper__col">
                                        <span class="line__connect"></span>
                                    </div>
                                    <div class="item__wrapper__col">
                                        <button name="button_retention_invoice" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_progressive_claim/retention-invoice.svg" width="50"/>
                                            <span>Retention Invoice</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="main">
                            <button class="header accordion-action" data-target="accordion-content-3">
                                <h2 class="title">Reporting</h2>
                            </button>
                            <div id="accordion-content-3" class="accordion-wrapper">
                                <div class="action__area">
                                    <button name="button_cost_progress" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_progressive_claim/cost-progress-analysis.svg"/>
                                        <span>Cost Progress Analysis</span>
                                    </button>
                                    <button name="button_scurve" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_progressive_claim/scurve.svg"/>
                                        <span>S-Curve</span>
                                    </button>
                                    <button name="button_gantt_chart" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_progressive_claim/gantt-chart.svg"/>
                                        <span>Gantt Chart</span>
                                    </button>
                                    <button name="button_issue_analysis" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_progressive_claim/issue-analysis.svg"/>
                                        <span>Issue Analysis</span>
                                    </button>
                                    <button name="button_project_progress" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_progressive_claim/project-progres-report.svg"/>
                                        <span>Project Progress Report</span>
                                    </button>
                                    <button name="button_claim_customer" type="object" class="item">
                                        <span>Progressive Claim Customer</span>
                                    </button>
                                    <button name="button_claim_subcon" type="object" class="item">
                                        <span>Progressive Claim Subcon</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="customer_progressive_claim_flow_wizard_action" model="ir.actions.act_window">
        <field name="name">Customer Progressive Claim Flow</field>
        <field name="res_model">customer.progressive.claim.flow.wizard</field>
        <field name="view_mode">form</field>
    </record>

    <record id="customer_progressive_claim_flow_wizard_action_client" model="ir.actions.client">
        <field name="name">Customer Progressive Claim Flow</field>
        <field name="tag">tag_customer_progressive_claim</field>
    </record>

    <menuitem
        id="customer_progressive_claim_flow_wizard_menu"
        name="Customer Progressive Claim Flow"
        action="equip3_construction_reports.customer_progressive_claim_flow_wizard_action_client"
        parent="account.menu_finance_receivables"
        sequence="-2"/>

    <record id="equip3_construction_reports.customer_progressive_claim_flow_wizard_menu" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-main-flow</field>
    </record>

</odoo>
