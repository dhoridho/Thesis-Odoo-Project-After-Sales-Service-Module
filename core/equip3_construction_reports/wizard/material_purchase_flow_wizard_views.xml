<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="material_purchase_flow_wizard_view_form" model="ir.ui.view">
        <field name="name">material.purchase.flow.wizard.view.form</field>
        <field name="model">material.purchase.flow.wizard</field>
        <field name="arch" type="xml">
            <form string="Material Purchase Flow">
                <script>
                    $(".o_control_panel").remove();
                </script>
                <sheet>
                    <div class="equip3_cons_flow_menu">
                        <div class="main">
                            <button class="header accordion-action" data-target="accordion-content-1">
                                <h2 class="title">Master Data</h2>
                            </button>
                            <div id="accordion-content-1" class="accordion-wrapper">
                                <div class="action__area">
                                    <button name="button_vendor" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_material_purchase/vendors.svg"/>
                                        <span>Vendor</span>
                                    </button>
                                    <button name="button_vendor_pricelist" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_material_purchase/vendor-pricelist.svg"/>
                                        <span>Vendor Pricelist</span>
                                    </button>
                                    <button name="button_add_product" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_material_purchase/product.svg"/>
                                        <span>Product</span>
                                    </button>
                                    <button name="button_group_of_product" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_material_purchase/goup-of-product.svg"/>
                                        <span>Group of Product</span>
                                    </button>
                                    <button name="button_uom" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_material_purchase/unit-of-measure.svg"/>
                                        <span>Unif of Measure</span>
                                    </button>
                                    <button name="button_variable" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_material_purchase/variable.svg"/>
                                        <span>Variable</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="main">
                            <button class="header accordion-action" data-target="accordion-content-2">
                                <h2 class="title">Material Purchase Flow</h2>
                            </button>
                            <div id="accordion-content-2" class="accordion-wrapper">
                                <div class="flow__area">
                                    <div class="item__wrapper__col">
                                        <button name="button_cost_sheet" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_material_purchase/cost-sheet.svg" width="50"/>
                                            <span>Cost Sheet</span>
                                        </button>
                                        <span class="item item__hide" style="height: 45px;"></span>
                                        <div class="item__wrapper__col">
                                            <button name="button_project_budget" type="object" class="item">
                                                <img src="/equip3_construction_reports/static/src/img/md_material_purchase/project-budget.svg" width="50"/>
                                                <span>Project Budget</span>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="connector__wrapper__col">
                                        <span class="line__connect" style="top: 27%; width: 121%; transform: rotate(35deg)"></span>
                                        <span class="line__connect" style="top: 73%; width: 121%; transform: rotate(-35deg)"></span>
                                    </div>
                                    <div class="item__wrapper__col">
                                        <button name="button_material_request" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_material_purchase/material-request.svg" width="50"/>
                                            <span>Material Request</span>
                                        </button>
                                    </div>
                                    <div class="connector__wrapper__col">
                                        <span class="line__connect" style="width: 131%; transform: rotate(-40deg)"></span>
                                        <span class="line__connect"></span>
                                        <span class="line__connect" style="width: 131%; transform: rotate(40deg)"></span>
                                    </div>
                                    <div class="item__wrapper__col">
                                        <button name="button_purchase_request" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_material_purchase/purchase-request.svg" width="50"/>
                                            <span>Purchase Request</span>
                                        </button>
                                        <button name="button_interwarehouse_transfer" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_material_purchase/interwarehouse-transfer.svg" width="50"/>
                                            <span>Interwarehouse Transfer</span>
                                        </button>
                                        <button name="button_intrawarehouse_transfer" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_material_purchase/intrawarehouse-transfer.svg" width="50"/>
                                            <span>Intrawarehouse Transfer</span>
                                        </button>
                                    </div>
                                    <div class="connector__wrapper__col">
                                        <span class="line__connect" style="top:27%; width: 115%; transform: rotate(-30deg)"></span>
                                        <span class="line__no__connect" style="top: 27%;"></span>
                                    </div>
                                    <div class="item__wrapper__col">
                                        <button name="button_purchase_tender" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_material_purchase/purchase-tender.svg" width="50"/>
                                            <span>Purchase Tender</span>
                                        </button>
                                        <span class="line__no__connect" style="top: 1.399%;"></span>
                                        <span class="item item__hide" style="height: 173px;"></span>
                                    </div>
                                    <div class="connector__wrapper__col">
                                        <span class="line__connect" style="top: 27.44444%;"></span>
                                        <span class="line__connect" style="top: 9%; width: 107%; transform: rotate(21deg)"></span>
                                    </div>
                                    <div class="item__wrapper__col">
                                        <button name="button_request_for_quotation" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_material_purchase/request-for-quotation.svg" width="50"/>
                                            <span>Request for Quotation</span>
                                        </button>
                                        <span class="item item__hide" style="height: 120px;"></span>
                                    </div>
                                    <div class="connector__wrapper__col">
                                        <span class="line__connect" style="top: 27%"></span>
                                    </div>
                                    <div class="item__wrapper__col">
                                        <button name="button_purchase_order" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_material_purchase/purchase-order.svg" width="50"/>
                                            <span>Purchase Order</span>
                                        </button>
                                        <span class="item item__hide" style="height: 120px;"></span>
                                    </div>
                                    <div class="connector__wrapper__col">
                                        <span class="line__connect" style="top: 27%"></span>
                                    </div>
                                    <div class="item__wrapper__col">
                                        <button name="button_bill" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_material_purchase/vendor-bill.svg" width="50"/>
                                            <span>Vendor Bill</span>
                                        </button>
                                        <span class="item item__hide" style="height: 120px;"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="main">
                            <button class="header accordion-action" data-target="accordion-content-3">
                                <h2 class="title">Reporting</h2>
                            </button>
                            <div id="accordion-content-3" class="accordion-wrapper">
                                <div class="action__area">
                                    <button name="button_cost_progress" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_material_purchase/cost-progress-analysis.svg"/>
                                        <span>Cost Progress Analysis</span>
                                    </button>
                                    <button name="button_scurve" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_material_purchase/scurve.svg"/>
                                        <span>S-Curve</span>
                                    </button>
                                    <button name="button_gantt_chart" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_material_purchase/gantt-chart.svg"/>
                                        <span>Gantt Chart</span>
                                    </button>
                                    <button name="button_issue_analysis" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_material_purchase/issue-analysis.svg"/>
                                        <span>Issue Analysis</span>
                                    </button>
                                    <button name="button_project_progress" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_material_purchase/project-progres-report.svg"/>
                                        <span>Project Progress Report</span>
                                    </button>
                                    <button name="button_claim_customer" type="object" class="item">
                                        <span>Progressive Claim Customer</span>
                                    </button>
                                    <button name="button_claim_subcon" type="object" class="item">
                                        <span>Progressive Claim Subcon</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="material_purchase_flow_wizard_action" model="ir.actions.act_window">
        <field name="name">Material Purchase Flow</field>
        <field name="res_model">material.purchase.flow.wizard</field>
        <field name="view_mode">form</field>
    </record>

    <record id="material_purchase_flow_wizard_action_client" model="ir.actions.client">
        <field name="name">Material Purchase Flow</field>
        <field name="tag">tag_material_purchase_flow</field>
    </record>

    <menuitem
        id="material_purchase_flow_wizard_menu"
        name="Material Purchase Flow"
        action="equip3_construction_reports.material_purchase_flow_wizard_action_client"
        parent="purchase.menu_procurement_management"
        sequence="-1"/>

    <record id="equip3_construction_reports.material_purchase_flow_wizard_menu" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-main-flow</field>
    </record>

</odoo>
