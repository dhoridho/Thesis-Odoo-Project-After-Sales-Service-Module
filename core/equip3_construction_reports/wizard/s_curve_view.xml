<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_wizard_s_curve" model="ir.ui.view">
        <field name="name">s.curve.wizard</field>
        <field name="model">s.curve</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="project" required="1"/>
                        <field name="company_id" invisible="1"/>
                        <field name="department_type" invisible="1"/>
                    </group>
                    <group>
                        <field name="work_orders" widget="many2many_tags" domain="[('project_id', '=', project)]" required="1"/>
                    </group>
                </group>
                <footer>
                    <button name="create_scurve" string="Create S-Curve" type="object" class="oe_highlight"/>
                    <button string="Cancel" special='cancel' class="btn-secondary"/>
                </footer>
            </form>
        </field>
        </record>

        <record id="action_s_curve" model="ir.actions.act_window">
            <field name="name">Create S-Curve</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">s.curve</field>
            <field name="domain">[('department_type', '=', 'project')]</field>
            <field name="context">{'default_department_type': 'project'}</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="sub_menu_s_curve" 
        name="S-Curve" 
        action="action_s_curve" 
        parent="menu_cons_reporting" 
        groups="abs_construction_management.group_construction_manager"
        sequence="2" />

        <record id="action_s_curve_internal" model="ir.actions.act_window">
            <field name="name">Create S-Curve</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">s.curve</field>
            <field name="domain">[('department_type', '=', 'department')]</field>
            <field name="context">{'default_department_type': 'department'}</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="sub_menu_s_curve_internal" 
        name="S-Curve" 
        action="action_s_curve_internal" 
        parent="menu_cons_reporting_internal" 
        groups="abs_construction_management.group_construction_manager"
        sequence="2" />

    </data>
</odoo>
