<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="cons_flow_wizard_view_form" model="ir.ui.view">
        <field name="name">construction.project_flow_wizard_view_form</field>
        <field name="model">construction.project.flow.wizard</field>
        <field name="arch" type="xml">
            <form string="Project Flow">
                <script>
                    $(".o_control_panel").remove();
                </script>
                <sheet>
                    <div class="equip3_cons_flow_menu">
                        <div class="main">
                            <button class="header accordion-action" data-target="accordion-content-1">
                                <h2 class="title">Master Data</h2>
                            </button>
                            <div id="accordion-content-1" class="accordion-wrapper">
                                <div class="action__area">
                                    <button name="button_customer" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_project_management/customer.svg" />
                                        <span>Customer</span>
                                    </button>
                                    <button name="button_stage" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_project_management/stage.svg" />
                                        <span>Stage</span>
                                    </button>
                                    <button name="button_type_issue" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_project_management/meetings-type.svg" />
                                        <span>Type of issue</span>
                                    </button>
                                    <button name="button_issue_stage" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_project_management/stages.svg" />
                                        <span>Issue Stage</span>
                                    </button>
                                    <button name="button_tags" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_project_management/tags.svg" />
                                        <span>Tags</span>
                                    </button>
                                    <button name="button_activity" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_project_management/meetings-type.svg" />
                                        <span>Activity Types</span>
                                    </button>
                                    <button name="button_project_template" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_project_management/project-template.svg" />
                                        <span>Project Template</span>
                                    </button>
                                    <button name="button_job_template" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_project_management/bills_of_material.svg" />
                                        <span>Job Order Template</span>
                                    </button>
                                    <button name="button_progress_matrix" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_project_management/one-time-site.svg" />
                                        <span>Progress History Approval Matrix</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="main">
                            <button class="header accordion-action" data-target="accordion-content-2">
                                <h2 class="title">Flow</h2>
                            </button>
                            <div id="accordion-content-2" class="accordion-wrapper">
                                <div class="flow__area">
                                    <div class="item__wrapper__col">
                                        <button name="button_project" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_project_management/project.svg" width="50"/>
                                            <span>Project</span>
                                        </button>
                                    </div>
                                    <div class="connector__wrapper__col">
                                        <span class="line__connect"></span>
                                    </div>
                                    <div class="item__wrapper__col">
                                        <button name="button_job_orders" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_project_management/job-orders.svg" width="50"/>
                                            <span>Job Order</span>
                                        </button>
                                    </div>
                                    <div class="connector__wrapper__col">
                                        <span class="line__connect" style="width: 136%; transform: rotate(-43deg);"></span>
                                        <span class="line__connect"></span>
                                        <span class="line__connect" style="width: 136%; transform: rotate(43deg);"></span>
                                    </div>
                                    <div class="item__wrapper__col">
                                        <button name="button_subtask" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_project_management/subtask.svg" width="50"/>
                                            <span>Subtask</span>
                                        </button>
                                        <button name="button_progress_history" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_project_management/progress-history.svg" width="50"/>
                                            <span>Progress History</span>
                                        </button>
                                        <button name="button_material_usage" type="object" class="item">
                                            <img src="/equip3_construction_reports/static/src/img/md_project_management/material-usage.svg" width="50"/>
                                            <span>Material usage</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="main">
                            <button class="header accordion-action" data-target="accordion-content-3">
                                <h2 class="title">Reporting</h2>
                            </button>
                            <div id="accordion-content-3" class="accordion-wrapper">
                                <div class="action__area">
                                    <button name="button_cost_progress" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_project_management/cost-progress-analysis.svg"/>
                                        <span>Cost Progress Analysis</span>
                                    </button>
                                    <button name="button_scurve" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_project_management/scurve.svg"/>
                                        <span>S-Curve</span>
                                    </button>
                                    <button name="button_gantt_chart" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_project_management/gantt-chart.svg"/>
                                        <span>Gantt Chart</span>
                                    </button>
                                    <button name="button_issue_analysis" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_project_management/issue-analysis.svg"/>
                                        <span>Issue Analysis</span>
                                    </button>
                                    <button name="button_project_progress" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_project_management/project-progres-report.svg"/>
                                        <span>Project Progress Report</span>
                                    </button>
                                    <button name="button_claim_customer" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_project_management/reporting.svg"/>
                                        <span>Progressive Claim Customer</span>
                                    </button>
                                    <button name="button_claim_subcon" type="object" class="item">
                                        <img src="/equip3_construction_reports/static/src/img/md_project_management/material_usage_report.svg"/>
                                        <span>Progressive Claim Subcon</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="construction_project_flow_wizard_action" model="ir.actions.act_window">
        <field name="name">Construction Project Flow</field>
        <field name="res_model">construction.project.flow.wizard</field>
        <field name="view_mode">form</field>
    </record>

    <record id="construction_project_flow_wizard_action_client" model="ir.actions.client">
        <field name="name">Construction Project Flow</field>
        <field name="tag">tag_project_flow</field>
    </record>

    <menuitem
        id="menu_project_flow_wizard"
        name="Project Flow"
        parent="abs_construction_management.construction_management"
        sequence="-4"
        groups = "abs_construction_management.group_construction_user"/>

    <record id="equip3_construction_reports.menu_project_flow_wizard" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-main-flow</field>
    </record>

    <menuitem
        id="project_flow_wizard"
        name="Project Flow"
        action="equip3_construction_reports.construction_project_flow_wizard_action_client"
        parent="abs_construction_management.construction_management"
        sequence="-5"
        groups = "abs_construction_management.group_construction_user"/>

</odoo>