<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="customer_claim_request_view_tree" model="ir.ui.view">
        <field name="name">customer.claim.request.view.tree</field>
        <field name="model">claim.request.line</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0">
                <field name="sr_no"/>
                <field name="progressive_bill" invisible="1"/>
                <field name="request_for" invisible="1"/>
                <field name="request_id" />
                <field name="project_id" />
                <field name="partner_id" />
                <field name="created_by"/>
                <field name="creation_date"/>
                <field name="requested_progress" />
                <field name="requested_progress_2" invisible="1" />
                <field name="approved_progress" invisible="1" />
                <field name="company_id" />
                <field name="state" readonly="1" 
                        widget="badge"
                        decoration-success="state == 'approved'"
                        decoration-info="state == 'to_approve'"
                        decoration-danger="state == 'rejected'"
                        />
            </tree>
        </field>
    </record>

    <record id="vendor_claim_request_view_tree" model="ir.ui.view">
        <field name="name">customer.claim.request.view.tree</field>
        <field name="model">claim.request.line</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0">
                <field name="sr_no"/>
                <field name="progressive_bill" invisible="1"/>
                <field name="request_for" invisible="1"/>
                <field name="request_id" />
                <field name="project_id" />
                <field name="vendor" />
                <field name="created_by"/>
                <field name="creation_date"/>
                <field name="requested_progress" />
                <field name="requested_progress_2" invisible="1" />
                <field name="approved_progress" invisible="1" />
                <field name="company_id" />
                <field name="state" readonly="1" 
                        widget="badge"
                        decoration-success="state == 'approved'"
                        decoration-info="state == 'to_approve'"
                        decoration-danger="state == 'rejected'"
                        />
            </tree>
        </field>
    </record>

    <!-- model.name inherit form view -->
    <record id="claim_request_view_inherit_2" model="ir.ui.view">
        <field name="name">claim.request.inherit.view.form</field>
        <field name="model">claim.request.line</field>
        <field name="inherit_id" ref="equip3_construction_accounting_operation.claim_request_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="attributes">
                <attribute name="create">0</attribute>
                <attribute name="edit">0</attribute>
                <attribute name="delete">0</attribute>
                <attribute name="duplicate">0</attribute>
            </xpath>            
        </field>
    </record>

    <record id="customer_claim_request_action" model="ir.actions.act_window">
        <field name="name">Claim Request</field>
        <field name="res_model">claim.request.line</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('customer_claim_request_view_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('claim_request_view_inherit_2')})]"/>
        <field name="domain">[('progressive_bill', '=', False)]</field>
        <field name="context">{'default_progressive_bill':False}</field> 
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Claim Request found. Let's create one!
            </p>
        </field>
    </record>

    <record id="vendor_claim_request_action" model="ir.actions.act_window">
        <field name="name">Claim Request</field>
        <field name="res_model">claim.request.line</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('vendor_claim_request_view_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('claim_request_view_inherit_2')})]"/>
        <field name="domain">[('progressive_bill', '=', True)]</field>
        <field name="context">{'default_progressive_bill':True}</field> 
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Claim Request found. Let's create one!
            </p>
        </field>
    </record>

</odoo>
