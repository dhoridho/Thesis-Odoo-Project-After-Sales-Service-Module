<?xml version='1.0' encoding='utf-8'?>
<odoo>
    
    <record id="action_job_estimate_approved" model="ir.actions.act_window">
        <field name="name">BOQ Confirmed</field>
        <field name="res_model">job.estimate</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('state_new', '=', 'confirmed'), ('department_type', '=', 'project')]</field>
        <field name="context">{'default_department_type': 'project'}</field>
    </record>

    <record id="action_job_estimate_not_approved" model="ir.actions.act_window">
        <field name="name">BOQ Not Confirmed</field>
        <field name="res_model">job.estimate</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('state_new', '!=', 'confirmed'), ('department_type', '=', 'project')]</field>
        <field name="context">{'default_department_type': 'project'}</field>
    </record>

    <record id="action_view_task_inherited_flow" model="ir.actions.act_window">
        <field name="name">Job Order</field>
        <field name="res_model">project.task</field>
        <field name="view_mode">tree,form,calendar,pivot,graph,activity,ks_gantt</field>
        <field name="domain">[('is_subcon', '=', False), ('is_subtask', '=', False), ('department_type', '=', 'project')]</field>
        <field name="context">{'default_department_type': 'project', 'default_is_subcon': False'}</field>
        <field name="search_view_id" ref="project.view_task_search_form"/>
    </record>

    <record id="action_view_task_inherited_subtask_flow" model="ir.actions.act_window">
        <field name="name">Subtask</field>
        <field name="res_model">project.task</field>
        <field name="view_mode">tree,form,calendar,pivot,graph,activity,ks_gantt</field>
        <field name="domain">[('is_subcon', '=', False), ('is_subtask', '=', True), ('department_type', '=', 'project')]</field>
        <field name="context">{'default_department_type': 'project', 'default_is_subcon': False'}</field>
        <field name="search_view_id" ref="project.view_task_search_form"/>
    </record>

    <record id="action_view_invoice_downpayment_customer" model="ir.actions.act_window">
        <field name="name">Down Payment Invoice</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form,kanban,calendar</field>
        <field name="domain">[('move_type', '=', 'out_invoice'),
                              ('project_invoice', '=', True),
                              ('progressive_method', '=', 'down_payment')]</field>
    </record>

    <record id="action_view_invoice_progress_customer" model="ir.actions.act_window">
        <field name="name">Progress Invoice</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form,kanban,calendar</field>
        <field name="domain">[('move_type', '=', 'out_invoice'),
                              ('project_invoice', '=', True),
                              ('progressive_method', '=', 'progress')]</field>
    </record>

    <record id="action_view_invoice_retention_customer" model="ir.actions.act_window">
        <field name="name">Progress Invoice</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form,kanban,calendar</field>
        <field name="domain">[('move_type', '=', 'out_invoice'),
                              ('project_invoice', '=', True),
                              ('progressive_method', 'in', ['retention1', 'retention2'])]</field>
    </record>

    <record id="action_view_invoice_downpayment_vendor" model="ir.actions.act_window">
        <field name="name">Down Payment Bill</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form,kanban,calendar</field>
        <field name="domain">[('move_type', '=', 'in_invoice'),
                              ('project_invoice', '=', True),
                              ('progressive_method', '=', 'down_payment')]</field>
    </record>

    <record id="action_view_invoice_progress_vendor" model="ir.actions.act_window">
        <field name="name">Progress Bill</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form,kanban,calendar</field>
        <field name="domain">[('move_type', '=', 'in_invoice'),
                              ('project_invoice', '=', True),
                              ('progressive_method', '=', 'progress')]</field>
    </record>

    <record id="action_view_invoice_retention_vendor" model="ir.actions.act_window">
        <field name="name">Progress Bill</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form,kanban,calendar</field>
        <field name="domain">[('move_type', '=', 'in_invoice'),
                              ('project_invoice', '=', True),
                              ('progressive_method', 'in', ['retention1', 'retention2'])]</field>
    </record>

</odoo>