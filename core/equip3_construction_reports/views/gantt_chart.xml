<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="action_view_gantt_report_cons" model="ir.actions.act_window">
        <field name="name">Gantt Chart</field>
        <field name="res_model">project.task</field>
        <field name="view_mode">ks_gantt</field>
        <field name="context">{'group_by': 'project_id'}</field>
        <field name="domain">[('department_type', '=', 'project')]</field>
        <field name="search_view_id" ref="project.view_task_search_form"/>
    </record>

    <menuitem id="gantt_chart_report"
        name="Gantt Chart"
        parent="menu_cons_reporting"
        action="action_view_gantt_report_cons"
        groups="abs_construction_management.group_construction_manager"
        sequence="3"/>

    <record id="action_view_gantt_report_cons_internal" model="ir.actions.act_window">
        <field name="name">Gantt Chart</field>
        <field name="res_model">project.task</field>
        <field name="view_mode">ks_gantt</field>
        <field name="context">{'group_by': 'project_id'}</field>
        <field name="domain">[('department_type', '=', 'department')]</field>
        <field name="search_view_id" ref="project.view_task_search_form"/>
    </record>

    <menuitem id="gantt_chart_report_internal"
        name="Gantt Chart"
        parent="menu_cons_reporting_internal"
        action="action_view_gantt_report_cons_internal"
        groups="abs_construction_management.group_construction_manager"
        sequence="3"/>

</odoo>