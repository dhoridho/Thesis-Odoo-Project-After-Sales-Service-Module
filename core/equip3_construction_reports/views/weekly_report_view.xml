<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- tree view -->
    <record id="project_progress_report_view_tree" model="ir.ui.view">
        <field name="name">Project Progress Report</field>
        <field name="model">project.progress.report</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" sample="1">
                <field name="name"/>
                <field name="project_id"/>
                <field name="contract_id" />
                <field name="report_start_date"/>
                <field name="report_end_date"/>
            </tree>
        </field>
    </record>

    <!-- form view -->
    <record id="project_progress_report_view_form" model="ir.ui.view">
        <field name="name">Project Progress Report</field>
        <field name="model">project.progress.report</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="get_report" string="GET REPORT" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_title pr-0">
                        <h1 class="d-flex flex-row">
                            <field name="name" class="o_task_name text-truncate" placeholder="Project Progress Report..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="project_id" options="{'no_create': True, 'no_quick_create':True,'no_create_edit':True}"/>
                            <field name="contract_id" attrs="{'invisible': [('department_type','=','department')], 'required': [('department_type', '=', 'project')]}"
                                   domain="[('project_id', '=', project_id), ('vo_payment_type', '=', 'split'), ('state', '=', 'sale')]"/>
                            <field name="job_estimate_id" attrs="{'invisible': [('department_type','=','project')], 'required': [('department_type', '=', 'department')]}"
                                   domain="[('project_id', '=', project_id), ('state_new', '=', 'confirmed')]"/>
                            <field name="is_project_internal" invisible="1"/>
                            <field name="report_start_date" />
                            <field name="report_end_date" />
                            <label for="completion"/>
                            <div>
                                <field name="completion" class="oe_inline" readonly="1" force_save="1"/>
                                <label for="completion" string="%%"/>
                            </div>
                            <label for="invoiced_progress"/>
                            <div>
                                <field name="invoiced_progress" class="oe_inline" readonly="1" force_save="1"/>
                                <label for="invoiced_progress" string="%%"/>
                            </div>
                        </group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="company_id"/>
                            <field name="branch_id" required="1"/>
                            <field name="add_description"/>
                            <field name="create_uid" />
                            <field name="create_date" />
                            <field name="department_type" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="description" string="Description" attrs="{'invisible': [('add_description', '=', False)]}">
                            <field name="description" nolabel="1"/>
                        </page>
                        <page name="progress" string="Progress History">
                            <field name="progress_history_ids" class="o_progress_history_line" force_save="1" readonly="1">
                                <tree string="Progress History" >
                                    <field name="progress_report" invisible="1"/>
                                    <field name="sequence" widget="handle" invisible="1"/>
                                    <field name="sr_no"/>
                                    <field name="job_order"/>
                                    <field name="stage_new"/>
                                    <field name="progress_start_date_new"/>
                                    <field name="progress_end_date_new"/>
                                    <field name="date_create"/>
                                    <field name="create_by" />
                                    <field name="progress" />
                                    <field name="progress_summary"/>
                                    <field name="project_id" invisible="1"/>
                                    <field name="contract_id" invisible="1"/>
                                    <field name="report_start_date" invisible="1"/>
                                    <field name="report_end_date" invisible="1"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="branch_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page name="issue" string="Issue History">
                            <field name="issue_history_ids" class="o_issue_history_line" force_save="1" readonly="1">
                                <tree string="Issue History" >
                                    <field name="progress_report" invisible="1"/>
                                    <field name="sequence" widget="handle" invisible="1"/>
                                    <field name="sr_no"/>
                                    <field name="issue_id"/>
                                    <field name="name"/>
                                    <field name="priority"/>
                                    <field name="issue_found_date"/>
                                    <field name="issue_solved_date" />
                                    <field name="date_create"/>
                                    <field name="issue_stage_id"/>
                                    <field name="project_id" invisible="1"/>
                                    <field name="contract_id" invisible="1"/>
                                    <field name="report_start_date" invisible="1"/>
                                    <field name="report_end_date" invisible="1"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="branch_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <!--     newly added usage page      -->
                        <page name='usage' string="Usage">
                            <notebook>
                                <page string="Material Usage">
                                    <field name="material_usage_ids" readonly="1">
                                        <tree>
                                            <field name="sr_no"/>
                                            <field name="reference"/>
                                            <field name="usage_name"/>
                                            <field name="warehouse_id"/>
                                            <field name="product_id"/>
                                            <field name="quantity"/>
                                            <field name="sale_price"/>
                                            <field name="analytic_groups_ids" widget="many2many_tags"/>
                                            <field name="created_on"/>
                                            <field name="expiry_date"/>
                                            <field name="state"/>
                                            <field name="project_budget" optional="hide"/>
                                            <field name="job_order_id" optional="hide"/>
                                            <field name="responsible_id" optional="hide"/>
                                            <field name="usage_type_id" optional="hide"/>
                                            <field name="schedule_date" optional="hide"/>
                                            <field name="company_id" optional="hide"/>
                                            <field name="branch_id" optional="hide"/>
                                            <field name="source_location_id" optional="hide"/>
                                            <field name="project_scope_id" optional="hide"/>
                                            <field name="section_id" optional="hide"/>
                                            <field name="variable_id" optional="hide"/>
                                            <field name="group_of_product_id" optional="hide"/>
                                            <field name="budget_quantity" optional="hide"/>
                                            <field name="unit_of_measure_id" optional="hide"/>
                                            <field name="lot_serial_id" optional="hide"/>
                                            <field name="package_id" optional="hide"/>
                                            <field name="owner_id" optional="hide"/>
                                            <field name="scrap_reference" optional="hide"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="Labour Usage" invisible="1">
                                    <field name="labour_usage_ids" readonly="1">
                                        <tree>
                                            <field name="sr_no"/>
                                            <field name="reference"/>
                                            <field name="usage_name"/>
                                            <field name="warehouse_id"/>
                                            <field name="product_id"/>
                                            <field name="quantity"/>
                                            <field name="sale_price"/>
                                            <field name="analytic_groups_ids" widget="many2many_tags"/>
                                            <field name="created_on"/>
                                            <field name="expiry_date"/>
                                            <field name="state"/>
                                            <field name="project_budget" optional="hide"/>
                                            <field name="job_order_id" optional="hide"/>
                                            <field name="responsible_id" optional="hide"/>
                                            <field name="usage_type_id" optional="hide"/>
                                            <field name="schedule_date" optional="hide"/>
                                            <field name="company_id" optional="hide"/>
                                            <field name="branch_id" optional="hide"/>
                                            <field name="source_location_id" optional="hide"/>
                                            <field name="project_scope_id" optional="hide"/>
                                            <field name="section_id" optional="hide"/>
                                            <field name="variable_id" optional="hide"/>
                                            <field name="group_of_product_id" optional="hide"/>
                                            <field name="budget_quantity" optional="hide"/>
                                            <field name="unit_of_measure_id" optional="hide"/>
                                            <field name="lot_serial_id" optional="hide"/>
                                            <field name="package_id" optional="hide"/>
                                            <field name="owner_id" optional="hide"/>
                                            <field name="scrap_reference" optional="hide"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="Overhead Usage">
                                    <field name="overhead_usage_ids" readonly="1">
                                        <tree>
                                            <field name="sr_no"/>
                                            <field name="reference"/>
                                            <field name="usage_name"/>
                                            <field name="warehouse_id"/>
                                            <field name="product_id"/>
                                            <field name="quantity"/>
                                            <field name="sale_price"/>
                                            <field name="analytic_groups_ids" widget="many2many_tags"/>
                                            <field name="created_on"/>
                                            <field name="expiry_date"/>
                                            <field name="state"/>
                                            <field name="project_budget" optional="hide"/>
                                            <field name="job_order_id" optional="hide"/>
                                            <field name="responsible_id" optional="hide"/>
                                            <field name="usage_type_id" optional="hide"/>
                                            <field name="schedule_date" optional="hide"/>
                                            <field name="company_id" optional="hide"/>
                                            <field name="branch_id" optional="hide"/>
                                            <field name="source_location_id" optional="hide"/>
                                            <field name="project_scope_id" optional="hide"/>
                                            <field name="section_id" optional="hide"/>
                                            <field name="variable_id" optional="hide"/>
                                            <field name="group_of_product_id" optional="hide"/>
                                            <field name="budget_quantity" optional="hide"/>
                                            <field name="unit_of_measure_id" optional="hide"/>
                                            <field name="lot_serial_id" optional="hide"/>
                                            <field name="package_id" optional="hide"/>
                                            <field name="owner_id" optional="hide"/>
                                            <field name="scrap_reference" optional="hide"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="Equipment Usage">
                                    <field name="equipment_usage_ids" readonly="1">
                                        <tree>
                                            <field name="sr_no"/>
                                            <field name="reference"/>
                                            <field name="usage_name"/>
                                            <field name="warehouse_id"/>
                                            <field name="product_id"/>
                                            <field name="quantity"/>
                                            <field name="sale_price"/>
                                            <field name="analytic_groups_ids" widget="many2many_tags"/>
                                            <field name="created_on"/>
                                            <field name="expiry_date"/>
                                            <field name="state"/>
                                            <field name="project_budget" optional="hide"/>
                                            <field name="job_order_id" optional="hide"/>
                                            <field name="responsible_id" optional="hide"/>
                                            <field name="usage_type_id" optional="hide"/>
                                            <field name="schedule_date" optional="hide"/>
                                            <field name="company_id" optional="hide"/>
                                            <field name="branch_id" optional="hide"/>
                                            <field name="source_location_id" optional="hide"/>
                                            <field name="project_scope_id" optional="hide"/>
                                            <field name="section_id" optional="hide"/>
                                            <field name="variable_id" optional="hide"/>
                                            <field name="group_of_product_id" optional="hide"/>
                                            <field name="budget_quantity" optional="hide"/>
                                            <field name="unit_of_measure_id" optional="hide"/>
                                            <field name="lot_serial_id" optional="hide"/>
                                            <field name="package_id" optional="hide"/>
                                            <field name="owner_id" optional="hide"/>
                                            <field name="scrap_reference" optional="hide"/>
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                            <!--  recently added code for 'usage' total  -->
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                <field name="total_material_usage" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                <field name="total_equipment_usage" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                <field name="total_labour_usage" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                <field name="total_overhead_usage" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                    <label for="total_usage" />
                                </div>
                                    <field name="total_usage" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}" force_save="1"/>
                            </group>
                        </page>
                        <page string="Scurve">
                            <field name="scurve_report_ids" class="o_scurve_report_line" force_save="1" readonly="1">
                                <tree string="Scurve">
                                    <field name="name"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="report_start_date"/>
                                            <field name="job_cost_sheet"/>
                                            <field name="project_budget" widget="many2many_tags"/>
                                        </group>
                                        <group>
                                            <field name="report_end_date"/>
                                            <field name="work_orders_ids" widget="many2many_tags"/>
                                            <field name="method"/>
                                            <field name="contract_amount" widget='monetary' readonly="1"/>
                                            <field name="ks_chart_data" invisible="1"/>
                                        </group>
                                    </group>
                                    <field name="ks_graph_view" widget="ks_graph"/>
                                    <field name="scurve_line_ids" class="o_scurve_line">
                                        <tree string="Scurve" editable="bottom">
                                            <control>
                                                <create name="add_product_control" string="Add a scurve"/>
                                            </control>
                                            <field name="sr_no"/>
                                            <field name="month"/>
                                            <field name="year"/>
                                            <field name="method" invisible="1"/>
                                            <field name="planned_cost" attrs="{'column_invisible':[('parent.method','in', ('progress', 'all'))]}" force_save="1"/>
                                            <field name="actual_cost" attrs="{'column_invisible':[('parent.method','in', ('progress', 'all'))]}" force_save="1"/>
                                            <field name="prog_planned_cost" attrs="{'column_invisible':[('parent.method','in', ('progress', 'cost', 'cvp', 'all'))]}" force_save="1"/>
                                            <field name="prog_actual_cost" attrs="{'column_invisible':[('parent.method','in', ('progress', 'cost', 'all'))]}" force_save="1"/>
                                            <field name="planned_progress" attrs="{'column_invisible':[('parent.method','in', ('cost', 'cvp', 'all'))]}"/>
                                            <field name="actual_progress" attrs="{'column_invisible':[('parent.method','in', ('cost', 'all'))]}"/>
                                            <field name="purchased_amt" attrs="{'column_invisible':[('parent.method','in', ('progress', 'cost', 'cvp', 'pa_costprog'))]}" force_save="1"/>
                                            <field name="transferred_amt" attrs="{'column_invisible':[('parent.method','in', ('progress', 'cost', 'cvp', 'pa_costprog'))]}"/>
                                            <field name="used_amt" attrs="{'column_invisible':[('parent.method','in', ('progress', 'cost', 'cvp', 'pa_costprog'))]}"/>
                                            <field name="planned_revenue" invisible="1"/>
                                            <field name="actual_revenue" invisible="1"/>
                                            <field name="planned_material_cost" invisible="1"/>
                                            <field name="actual_material_cost" invisible="1"/>
                                        </tree>
                                    </field>
                                </form>
                            </field>
                        </page>
                        <page name="claim_history" string="Claim History">
                            <notebook>
                                <page name="customer_claim_history" string="Customer" attrs="{'invisible': [('department_type','=','department')]}">
                                    <field name="customer_claim_history_ids" readonly="1" domain="[('progressive_bill', '=', True)]">
                                        <tree>
                                            <field name="sr_no"/>
                                            <field name="claim_id"/>
                                            <field name="date"/>
                                            <field name="claim_name"/>
                                            <field name="claim_for" optional="hide"/>
                                            <field name="progressline"/>
                                            <field name="gross_amount"/>
                                            <field name="dp_deduction"/>
                                            <field name="retention_deduction"/>
                                            <field name="amount_deduction"/>
                                            <field name="paid_invoice"/>
                                            <field name="amount_untaxed"/>
                                            <field name="tax_id" widget="many2many_tags" optional="hide"/>
                                            <field name="tax_amount"/>
                                            <field name="amount_invoice"/>
                                            <field name="amount_claim"/>
                                            <field name="remaining_amount"/>
                                            <field name="invoice_status"/>
                                            <field name="payment_status"/>
                                            <field name="report_id" invisible="1"/>
                                            <field name="company_id" invisible="1"/>
                                            <field name="currency_id" invisible="1"/>
                                            <field name="progressive_bill" invisible="1"/>
                                        </tree>
                                    </field>
                                </page>
                                <page name="subcon_claim_history" string="Subcon">
                                    <field name="subcon_claim_history_ids" readonly="1" domain="[('progressive_bill', '=', True)]">
                                        <tree>
                                            <field name="sr_no"/>
                                            <field name="claim_id"/>
                                            <field name="date"/>
                                            <field name="claim_name"/>
                                            <field name="claim_for" optional="hide"/>
                                            <field name="progressline"/>
                                            <field name="gross_amount"/>
                                            <field name="dp_deduction"/>
                                            <field name="retention_deduction"/>
                                            <field name="amount_deduction"/>
                                            <field name="paid_invoice"/>
                                            <field name="amount_untaxed"/>
                                            <field name="tax_id" widget="many2many_tags" optional="hide"/>
                                            <field name="tax_amount"/>
                                            <field name="amount_invoice"/>
                                            <field name="amount_claim"/>
                                            <field name="remaining_amount"/>
                                            <field name="invoice_status"/>
                                            <field name="payment_status"/>
                                            <field name="report_id" invisible="1"/>
                                            <field name="company_id" invisible="1"/>
                                            <field name="currency_id" invisible="1"/>
                                            <field name="progressive_bill" invisible="1"/>
                                        </tree>
                                    </field>
                                </page>
                            </notebook>

                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter" name="chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- action window -->
    
    <record id="project_progress_report_action" model="ir.actions.act_window">
        <field name="name">Project Progress Report</field>
        <field name="res_model">project.progress.report</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="project_progress_report_view_tree"/>
        <field name="domain">[('department_type', '=', 'project')]</field>
        <field name="context">{'default_department_type': 'project'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Project Progress Report found. Let's create one!
            </p>
        </field>
    </record>

    <!-- This Menu Item Must have a parent -->
    <menuitem id="project_progress_report_menu"
        name="Project Progress Report"
        parent="menu_cons_reporting"
        groups="abs_construction_management.group_construction_manager"
        action="project_progress_report_action"
        sequence="5"/>
    
    <record id="project_progress_report_action_internal" model="ir.actions.act_window">
        <field name="name">Project Progress Report</field>
        <field name="res_model">project.progress.report</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="project_progress_report_view_tree"/>
        <field name="domain">[('department_type', '=', 'department')]</field>
        <field name="context">{'default_department_type': 'department'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Project Progress Report found. Let's create one!
            </p>
        </field>
    </record>

    <!-- This Menu Item Must have a parent -->
    <menuitem id="project_progress_report_menu_internal"
        name="Project Progress Report"
        groups="abs_construction_management.group_construction_manager"
        parent="menu_cons_reporting_internal"
        action="project_progress_report_action_internal"
        sequence="5"/>

</odoo>