<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- Pivot View [Cost In Progress] -->
    <record id="view_issue_analysis_menu_pivot" model="ir.ui.view">
        <field name="name">Issue Analysis Pivot View</field>
        <field name="model">project.issue</field>
        <field name="arch" type="xml">
            <pivot string="Issue Analysis">
                <field name="project_id" type="row"/>
                <field name="name" type="row" />
                <field name="days_since_create_date" type="measure" />
                <field name="days_since_issue_found" type="measure" />
                <field name="days_since_last_action" type="measure" />
                <field name="working_hours_to_solve" type="measure" />
            </pivot>
        </field>
    </record>

    <!--ACTION [Cost In Progress]-->
    <record id="action_issue_analysis" model="ir.actions.act_window">
        <field name="name">Issues Analysis</field>
        <field name="res_model">project.issue</field>
        <field name="view_mode">pivot</field>
        <field name="domain">[('department_type', '=', 'project')]</field>
        
    </record>

    <!--MENU [Cost In Progress]-->
    <menuitem id="menu_cost_issue_analysis"
        name = "Issues Analysis"
        parent = "menu_cons_reporting"
        groups="abs_construction_management.group_construction_manager"
        action = "action_issue_analysis"
        sequence="4"/>

    <!--ACTION [Cost In Progress (Internal)]-->
    <record id="action_issue_analysis_internal" model="ir.actions.act_window">
        <field name="name">Issues Analysis</field>
        <field name="res_model">project.issue</field>
        <field name="view_mode">pivot</field>
        <field name="domain">[('department_type', '=', 'department')]</field>
    </record>

    <!--MENU [Cost In Progress (Internal)]-->
    <menuitem id="menu_cost_issue_analysis_internal"
        name = "Issues Analysis"
        parent = "menu_cons_reporting_internal"
        groups="abs_construction_management.group_construction_manager"
        action = "action_issue_analysis_internal"
        sequence="4"/>
</odoo>