<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
    <!-- res.bank inherit tree view -->
    <record id="res_bank_view_id" model="ir.ui.view">
        <field name="name">res.bank.inherit.view.tree</field>
        <field name="model">res.bank</field>
        <field name="inherit_id" ref="base.view_res_bank_tree"/>
        <field name="arch" type="xml">
            <!-- Add your xpath here -->
            <xpath expr="//field[@name='name']" position="after">
                <field name="code"/>
            </xpath>

            <xpath expr="//field[@name='country']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>

        </field>
    </record>

    <!-- res.bank inherit form view -->
    <record id="res_bank_code_form" model="ir.ui.view">
        <field name="name">res.bank.code.form</field>
        <field name="model">res.bank</field>
        <field name="inherit_id" ref="base.view_res_bank_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bic']" position="after">
                <field name="code" required="1"/>
            </xpath>
            <xpath expr="//field[@name='code']" position="after">
                <field name="bank_provider"/>
            </xpath>
        </field>
    </record>

    <record id="action_data_bank" model="ir.actions.act_window">
        <field name="name">Bank Details</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.bank</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="data_bank" action="action_data_bank" parent="account.account_banks_menu" sequence="5" />

    </data>    
</odoo>