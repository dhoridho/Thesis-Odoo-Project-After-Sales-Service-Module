<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_partner_supplier_ebupot_details_form" model="ir.ui.view">
            <field name="name">res.partner.supplier.ebupot.details.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook[last()]" position="inside">
                    <page string="E-Bupot" name="ebupot" invisible='1'>
                        <group>
                            <group>
                                <field name="sign_ebupot_id" attrs="{'invisible' : [('visible_all','=',False)]}"/>
                                <field name="identity_id" attrs="{'invisible' : [('visible_all','=',False)]}"/>
                                <!-- <field name="vat_bp" string="NPWP" attrs="{'invisible' : [('identity_id','not in',['npwp'])]}"/>
                                <field name="nin" attrs="{'invisible' : [('identity_id','not in',['nik'])]}"/> -->
                                <field name="vat_bp" string="NPWP" attrs="{'invisible' : [('visible_vat_bp','=',False)]}"/>
                                <field name="nin" attrs="{'invisible' : [('visible_nin','=',False)]}"/>
                                <field name="user_sign" attrs="{'invisible' : [('visible_all','=',False)]}"/>
                            </group>
                            <group>
                                <field name="tax_facility" attrs="{'invisible' : [('visible_all','=',False)]}"/>
                                <!-- <field name="doc_number" attrs="{'invisible' : [('tax_facility','not in',['skb','dtp','pp23'])]}"/>
                                <field name="other_tax" attrs="{'invisible' : [('tax_facility','not in',['other'])]}"/>
                                <field name="desc_other_tax" attrs="{'invisible' : [('tax_facility','not in',['other'])]}"/> -->
                                <field name="doc_number" attrs="{'invisible' : [('visible_doc_number','=',False)]}"/>
                                <field name="other_tax" attrs="{'invisible' : [('visible_other_tax','=',False)]}"/>
                                <field name="desc_other_tax" attrs="{'invisible' : [('visible_all','=',False)]}"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="tin" attrs="{'invisible' : [('visible_all','=',False)]}"/>
                                <!-- <field name="date" attrs="{'invisible' : [('company_type','!=','person')]}"/>
                                <field name="country" attrs="{'invisible' : [('company_type','!=','person')]}"/> -->
                                <field name="date" attrs="{'invisible' : [('visible_date','=',False)]}"/>
                                <field name="country" attrs="{'invisible' : [('visible_country','=',False)]}"/>
                                <field name="no_paspor" attrs="{'invisible' : [('visible_all','=',False)]}"/>
                                <field name="no_kitas" attrs="{'invisible' : [('visible_all','=',False)]}"/>
                            </group>
                        </group>
                        <field name="visible_vat_bp" invisible='1'/>
                        <field name="visible_nin" invisible='1'/>
                        <field name="visible_doc_number" invisible='1'/>
                        <field name="visible_other_tax" invisible='1'/>
                        <field name="visible_desc_other_tax" invisible='1'/>
                        <field name="visible_date" invisible='1'/>
                        <field name="visible_country" invisible='1'/>
                        <field name="visible_all" invisible='1'/>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="base_view_partner_form_inherited_new" model="ir.ui.view">
            <field name="name">Addition Accounting Entries Field</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='property_account_payable_id']" position="after">
                    <field name="interest_customer_account_receivable" />
                    <field name="interest_vendor_account_payable" />
                </xpath>
            </field>
        </record>


        <record id="view_partner_property_form_inherit_2" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="account.view_partner_property_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='accounting']//group[1]" position="inside">
                    <field name="customer_availability" invisible="1" force_save="1"/>
                    <group string="Invoicing Setting" attrs="{'invisible': [('customer_availability','=',False)]}" >
                        <label for="invoiced_at_monday" string="Days Can Be Invoiced"/>
                        <div>
                            <label for="invoiced_at_monday" string="MON"/>
                            <field name="invoiced_at_monday" style="width: 7%"/>
                            <label for="invoiced_at_tuesday" string="TUE"/>
                            <field name="invoiced_at_tuesday" style="width: 7%"/>
                            <label for="invoiced_at_wednesday" string="WED"/>
                            <field name="invoiced_at_wednesday" style="width: 7%"/>
                            <label for="invoiced_at_thursday" string="THU"/>
                            <field name="invoiced_at_thursday" style="width: 7%"/>
                            <label for="invoiced_at_friday" string="FRI"/>
                            <field name="invoiced_at_friday" style="width: 7%"/>
                            <label for="invoiced_at_saturday" string="SAT"/>
                            <field name="invoiced_at_saturday" style="width: 7%"/>
                            <label for="invoiced_at_sunday" string="SUN"/>
                            <field name="invoiced_at_sunday" style="width: 7%"/>
                        </div>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- <record id="base_view_partner_form_inherited_new" model="ir.ui.view">
            <field name="name">Customer Addition Account Receivable</field>
            <field name="model">res.partner</field>
            <field name="priority">2</field>
