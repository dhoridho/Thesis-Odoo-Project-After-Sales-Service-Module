<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="setup_bank_account_wizard" model="ir.ui.view">
        <field name="name">account.online.sync.res.partner.bank.setup.form</field>
        <field name="model">account.setup.bank.manual.config</field>
        <field name="inherit_id" ref="account.setup_bank_account_wizard"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group[1]/group[1]" position="after">
                <group modifiers="{}">
                    <field name="company_id" force_save='1' readonly='1'/>
                    <field name="branch_id" readonly='0' options="{'no_create': True, 'no_create_edit': True}" />
                </group>
            </xpath>
        </field>
    </record>

    <record id="inherit_account_reconcile_form" model="ir.ui.view">
        <field name="name">inherit_account_reconcile_form</field>
        <field name="model">account.reconcile.model</field>
        <field name="inherit_id" ref="account.view_account_reconcile_model_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='create_date']" position="after">
                <field name="company_id" force_save='1' options="{'no_create': True}" can_create="false" can_write="false" modifiers="{}" id="company_id" readonly='1'/>
                <field name="branch_id" readonly='0' options="{'no_create': True, 'no_create_edit': True}"/>
            </xpath>

        </field>
    </record>

    <record id="inherit_view_account_form" model="ir.ui.view">
        <field name="name">inherit.account.account.form</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group/group[@name='left_main_group']/field[@name='company_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//sheet/group/group[@name='left_main_group']" position="inside">
                <field name="company_id" force_save='1' readonly='1'/>
                <field name="branch_id" readonly='0' options="{'no_create': True, 'no_create_edit': True}"/>
            </xpath>

        </field>
    </record>

    <record id="inherit_view_tax_form" model="ir.ui.view">
        <field name="name">inherit.account.tax.form</field>
        <field name="model">account.tax</field>
        <field name="inherit_id" ref="account.view_tax_form"/>
        <field name="arch" type="xml">

            <xpath expr="//sheet/group[1]/group[1]" position="inside">
                <field name="company_id" force_save='1' readonly='1'/>
                <field name="branch_id" readonly='0' options="{'no_create': True, 'no_create_edit': True}"/>
            </xpath>

            <xpath expr="//page[@name='definition']/div[1]" position="replace">
                <div attrs="{'invisible': [('amount_type', '=', 'group')]}">
                    <field name="tax_fiscal_country_id" invisible="1"/>
                    <field name="country_code" invisible="1"/>
                    <group string="Distribution for Invoices" attrs="{'invisible': [('type_tax_use','!=', 'sale')]}">
                        <field name="invoice_repartition_line_ids" nolabel="1" context="{'default_company_id': company_id}"/>
                    </group>
                    <group string="Distribution for Credit Notes" attrs="{'invisible': [('type_tax_use','!=', 'sale')]}">
                        <field name="refund_repartition_line_ids" nolabel="1" context="{'default_company_id': company_id}"/>
                    </group>
                    <group string="Distribution for Bills" attrs="{'invisible': [('type_tax_use','!=', 'purchase')]}">
                        <field name="invoice_repartition_line_ids" nolabel="1" context="{'default_company_id': company_id}"/>
                    </group>
                    <group string="Distribution for Debit Notes" attrs="{'invisible': [('type_tax_use','!=', 'purchase')]}">
                        <field name="refund_repartition_line_ids" nolabel="1" context="{'default_company_id': company_id}"/>
                    </group>
                </div>
            </xpath>

        </field>
    </record>

    <record id="inherit_view_account_journal_form" model="ir.ui.view">
        <field name="name">inherit.account.journal.form</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group/group[2]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//sheet/group[1]/group[1]" position="inside">
                <field name="company_id" force_save='1' readonly='1'/>
                <field name="branch_id" readonly='0' options="{'no_create': True, 'no_create_edit': True}"/>
            </xpath>

            <xpath expr="//notebook/page[@name='advanced_settings']/group/group[6]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="inherit_view_account_position_form" model="ir.ui.view">
        <field name="name">inherit.account.fiscal.position.form</field>
        <field name="model">account.fiscal.position</field>
        <field name="inherit_id" ref="account.view_account_position_form"/>
        <field name="arch" type="xml">

            <xpath expr="//sheet/group[1]/group[1]" position="inside">
                <!-- <field name="company_id" readonly='1'/> -->
                <field name="branch_id" readonly='0' options="{'no_create': True, 'no_create_edit': True}" />
            </xpath>

