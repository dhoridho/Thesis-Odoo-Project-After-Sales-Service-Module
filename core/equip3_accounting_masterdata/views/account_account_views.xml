    <record id="inherit_account_tax_report_form" model="ir.ui.view">
        <field name="name">inherit.account.tax.report.form</field>
        <field name="model">account.tax.report</field>
        <field name="inherit_id" ref="account.account_tax_report_form"/>
        <field name="arch" type="xml">

            <xpath expr="//sheet/group[1]/group[1]" position="inside">
