    <record id="inherit_view_budget_post_form" model="ir.ui.view">
        <field name="name">inherit.account.budget.post.form</field>
        <field name="model">account.budget.post</field>
        <field name="inherit_id" ref="om_account_budget.view_budget_post_form"/>
        <field name="arch" type="xml">

            <xpath expr="//group[1]" position="replace">
                <group>
                    <group>
                        <field name="name"/>
                        <field name="company_id" force_save='1' groups="base.group_multi_company" options="{'no_create': True}" readonly='1'/>
                        <field name="branch_id" readonly='0' options="{'no_create': True, 'no_create_edit': True}"/>
                    </group>
                </group>                
            </xpath>

        </field>
    </record>

    <record id="inherit_view_account_asset_category_form" model="ir.ui.view">
        <field name="name">inherit.account.asset.category.form</field>
        <field name="model">account.asset.category</field>
        <field name="inherit_id" ref="om_account_asset.view_account_asset_category_form"/>
        <field name="arch" type="xml">

