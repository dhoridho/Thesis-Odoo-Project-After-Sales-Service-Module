<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="bank_account_account_form_view" model="ir.ui.view">
            <field name="name">bank.account.account.form</field>
            <field name="model">bank.account.account</field>
            <field name="arch" type="xml">
                <form string="Bank Account">
                    <sheet>
                        <group>
                            <group>
                                <field name="acc_number" />
                                <field name="bank_id" />
                                <field name="bank_bic" />
                            </group>
                            <group>
                                <field name="company_id" readonly="1"/>
                                <field name="branch_id"  options="{'no_create': True, 'no_create_edit': True}" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_tree_bank_account" model="ir.ui.view">
            <field name="name">bank.account.account.tree</field>
            <field name="model">bank.account.account</field>
            <field name="arch" type="xml">
                <tree string="Bank Account">
                    <field name="acc_number"/>
                    <field name="bank_id"/>
                    <field name="branch_id"/>
                </tree>
            </field>
        </record>

        <record id="action_bank_account_account" model="ir.actions.act_window">
            <field name="name">Bank Account</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">bank.account.account</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_views_nocontent_create">
                Click to add a new test object.
                </p>
            </field>
        </record>

        <menuitem id="bank_account_menu" action="action_bank_account_account" parent="account.account_banks_menu" sequence="4" />
    </data>
</odoo>
