<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mr_account_account_form" model="ir.ui.view">
        <field name="name">mr_account_account_form</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="arch" type="xml">

            <xpath expr="//group[@name='left_main_group']" position="inside">
                <field name="create_uid" string="Created By" readonly="1"/>
                <field name="create_date" string="Created Date" readonly="1"/>
            </xpath>


            <xpath expr="//field[@name='group_id']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>

            <xpath expr="//sheet" position="after">
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </xpath>
        </field>
    </record>

    <record id="mr_account_tax_form" model="ir.ui.view">
        <field name="name">mr_account_tax_form</field>
        <field name="model">account.tax</field>
        <field name="inherit_id" ref="account.view_tax_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='active']" position="after">
                <field name="create_uid" string="Created By" readonly="1"/>
                <field name="create_date" string="Created Date" readonly="1"/>
            </xpath>

            <xpath expr="//sheet" position="after">
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </xpath>
        </field>
    </record>

    <record id="mr_account_journal_form" model="ir.ui.view">
        <field name="name">mr_account_journal_form</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="after">
                <field name="create_uid" string="Created By" readonly="1"/>
                <field name="create_date" string="Created Date" readonly="1"/>
            </xpath>

            <xpath expr="//field[@name='type']" position="after">
                <field name="is_fiscal_book_exclude"/>
            </xpath>
        </field>
    </record>

    <record id="mr_account_type_form" model="ir.ui.view">
        <field name="name">mr_account_type_form</field>
        <field name="model">account.account.type</field>
        <field name="inherit_id" ref="account.view_account_type_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="replace">
                <form string="Account Type">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="type"/>
                                <field name="create_uid" string="Created By" readonly="1"/>
                                <field name="create_date" string="Created Date" readonly="1"/>
                            </group>
                            <group>
                                <field name="include_initial_balance"/>
                            </group>
                        </group>
                        <separator string="Description"/>
                        <field name="note"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </xpath>
        </field>
    </record>

    <record id="mr_account_reconcile_form" model="ir.ui.view">
        <field name="name">mr_account_reconcile_form</field>
        <field name="model">account.reconcile.model</field>
        <field name="inherit_id" ref="account.view_account_reconcile_model_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="create_uid" string="Created By" readonly="1"/>
                <field name="create_date" string="Created Date" readonly="1"/>
            </xpath>

            <xpath expr="//sheet" position="after">
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </xpath>
        </field>
    </record>

    <record id="mr_account_payment_form" model="ir.ui.view">
        <field name="name">mr_account_payment_form</field>
        <field name="model">account.payment.term</field>
        <field name="inherit_id" ref="account.view_payment_term_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="create_uid" string="Created By" readonly="1"/>
                <field name="create_date" string="Created Date" readonly="1"/>
            </xpath>

            <xpath expr="//sheet" position="after">
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </xpath>
        </field>
    </record>

    <record id="mr_account_payment_form_master" model="ir.ui.view">
        <field name="name">mr_account_payment_form_master</field>
        <field name="model">account.payment.term</field>
        <field name="inherit_id" ref="interest_on_overdue_invoice.view_payment_term_form_inherited"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='account_id']" position="attributes">
                <attribute name="attrs">{'invisible':['|',('interest_type','=', False), ('interest_type','!=', False)]}</attribute>
            </xpath>
        </field>
    </record>

    <record id="mr_view_company_form" model="ir.ui.view">
        <field name="name">mr_view_company_form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='favicon']" position="after">
                <field name="anglo_saxon_accounting"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_journal_form" model="ir.ui.view">
        <field name="name">account.journal.form</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='journal_entries']" position="replace">
                <!-- <attribute name="invisible">1</attribute> -->
            </xpath>

            <xpath expr="//notebook/page[@name='bank_account']/group/group/field[@name='default_account_type']" position="after">
                <field name="use_reconcile" string="Use Bank Reconcile ?" attrs="{'invisible': [('type', 'not in', ('bank', 'cash'))]}"/>
            </xpath>

            <xpath expr="//notebook/page[@name='bank_account']/group/group/field[@name='default_account_id']" position="replace">
                 <!-- Bank -->
                <field name="default_account_id" string="Bank Account"
                        attrs="{'required': [('type', '=', 'bank')], 'invisible': [('type', '!=', 'bank')]}"
                        groups="account.group_account_readonly"/>
                <!-- Cash -->
                <field name="default_account_id" string="Cash Account"
                        attrs="{'required': [('type', '=', 'cash')], 'invisible': [('type', '!=', 'cash')]}"
                        groups="account.group_account_readonly"/>
            </xpath>

            <xpath expr="//notebook/page[@name='bank_account']" position="inside">
                <group attrs="{'invisible': [('type', 'not in', ('bank', 'cash'))]}">
                    <group string="Incoming Payments">
                        <div class="o_td_label" attrs="{'invisible': [('type', 'not in', ('bank', 'cash','opening'))]}">
                            <label for="payment_debit_account_id" string="Debit Account" attrs="{'invisible': [('use_reconcile', '=', True)]}"/>
                            <label for="payment_debit_account_id" string="Outstanding Receipts Account" attrs="{'invisible': [('use_reconcile', '=', False)]}"/>
                        </div>

                        <field name="payment_debit_account_id" nolabel='1'
                               attrs="{'required': [('id', '!=', False), ('type', 'in', ('bank', 'cash'))], 'invisible': [('type', 'not in', ('bank', 'cash','opening'))]}"
                               groups="account.group_account_readonly"/>
                        <field name="inbound_payment_method_ids" string="Methods" widget="many2many_checkboxes" attrs="{'invisible': [('type', 'not in', ['bank', 'cash'])]}"/>
                    </group>
                    <group string="Outgoing Payments">
                        <field name="id" invisible="1"/>
                        <div class="o_td_label" attrs="{'invisible': [('type', 'not in', ('bank', 'cash','opening'))]}">
                            <label for="payment_credit_account_id" string="Credit Account" attrs="{'invisible': [('use_reconcile', '=', True)]}"/>
                            <label for="payment_credit_account_id" string="Outstanding Payment Account" attrs="{'invisible': [('use_reconcile', '=', False)]}"/>
                        </div>

                        <field name="payment_credit_account_id" nolabel='1'
                               attrs="{'required': [('id', '!=', False), ('type', 'in', ('bank', 'cash'))], 'invisible': [('type', 'not in', ('bank', 'cash','opening'))]}"
                               groups="account.group_account_readonly"/>
                        <field name="outbound_payment_method_ids" string="Methods" widget="many2many_checkboxes" attrs="{'invisible': [('type', 'not in', ['bank', 'cash'])]}"/>                        
                    </group>
                    <group name="outgoing_payment" />
                    <group string="Check Printing"
                           attrs="{'invisible': ['|', ('type', '!=', 'bank'), ('check_printing_payment_method_selected', '=', False)]}">
                        <field name="check_printing_payment_method_selected" invisible="1"/>
                        <field name="check_sequence_id" invisible="1"/>
                        <field name="check_manual_sequencing"/>
                        <field name="check_next_number"
                               attrs="{'invisible': [('check_manual_sequencing', '=', False)]}"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <record id="view_account_journal_search_inherit" model="ir.ui.view">
        <field name="name">account.journal.search.inherit</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search/filter[@name='inactive']" position="after">
                
            </xpath> 
        </field>
    </record>



    <record id="view_move_form_inherit_accounting_masterdata" model="ir.ui.view">
        <field name="name">view.move.form.inherit.accounting.masterdata</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//group" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//group" position="before">
                <group>
                    <div>
                        <div class="row">
                            <div class="col" name="col_1">
                                <group id="col_1" name="col_1">
                                    <div class="o_td_label">

                                        <label for="partner_id" string="Customer" style="font-weight:bold;"
                                                attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund','out_receipt'))]}"/>
                                        <label for="partner_id" string="Vendor" style="font-weight:bold;"
                                                attrs="{'invisible': [('move_type', 'not in', ('in_invoice', 'in_refund','in_receipt'))]}"/>
                                        <label for="partner_id" string="Partner" style="font-weight:bold;"
                                                attrs="{'invisible': [('move_type', 'not in', ('entry'))]}"/>
                                    </div>
                                    <field name="partner_id" required="0" widget="res_partner_many2one" nolabel="1"
                                            context="{
                                                'res_partner_search_mode': (context.get('default_move_type', 'entry') in ('out_invoice', 'out_refund', 'out_receipt') and 'customer') or (context.get('default_move_type', 'entry') in ('in_invoice', 'in_refund', 'in_receipt') and 'supplier') or False,
                                                'show_address': 1, 'default_is_company': True, 'show_vat': True}"
                                            options='{"always_reload": True, "no_quick_create": True}'
                                            attrs="{'required': [('move_type', 'in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}"/>
                                    
                                    <!--  -->
                                    <field name="attn" placeholder="Attention" />
                                    <!--  -->
                                    <field name="analytic_group_ids" widget="many2many_tags"/>
                                    <!--  -->
                                    <field name="partner_shipping_id" />
                                    <!--  -->
                                    
                                    <field name="sh_invoice_recurring_order_id" readonly="True" />
                                    <!--  -->
                                    
                                </group>
                            </div>
                            <div class="col" name="col_2">
                                <group id="col_2" name="col_2">
                                    <!-- Invoice date (only invoices / receipts) -->
                                    <div class="o_td_label">
                                        <label for="invoice_date" string="Invoice Date" style="font-weight:bold;"
                                                attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'out_receipt'))], 'required': [('move_type', 'in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}"/>
                                        <label for="invoice_date" string="Bill Date" style="font-weight:bold;"
                                                attrs="{'invisible': [('move_type', 'not in', ('in_invoice', 'in_refund', 'in_receipt'))], 'required': [('move_type', 'in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}"/>
                                        <!-- <label for="invoice_date" string="Date" style="font-weight:bold;"
                                                attrs="{'invisible': [('move_type', 'not in', ('entry'))]}"/> -->
                                    </div>
                                    <field name="invoice_date" nolabel="1" options="{'datepicker': {'warn_future': true}}"
                                       attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))], 'required': [('move_type', 'in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}"/>
                                    <!--  -->
                                    <field name="period_id" />
                                    <!--  -->
                                    <field name="fiscal_year" />
                                    <!--  -->
                                    <field name="date" string="Accounting Date"
                                        attrs="{
                                            'invisible': [('move_type', 'in', ('out_invoice', 'out_refund', 'out_receipt'))],
                                            'readonly': [('state', '!=', 'draft')],
                                        }"/>
                                    <!--  -->
                                    <!-- Invoice payment terms (only invoices) + due date (only invoices / receipts) -->
                                    <label for="invoice_payment_term_id" string="Due Date"
                                            attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}"/>
                                    <div class="d-flex" attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}">
                                        <field name="invoice_date_due" force_save="1"
                                                placeholder="Date"
                                                attrs="{'invisible': [('invoice_payment_term_id', '!=', False)]}"/>
                                        <span class="o_form_label mx-3 oe_edit_only"
                                                attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('invoice_payment_term_id', '!=', False)]}"> or </span>
                                        <field name="invoice_payment_term_id"
                                                placeholder="Terms"/>
                                    </div>

                                    <!--  -->
                                     <field name="payment_reference"
                                       attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))], 'readonly': [('state', '!=', 'draft')]}"/>
                                    <!--  -->

                                    <!--  -->
                                    <field name="partner_bank_id"
                                        context="{'default_partner_id': bank_partner_id}"
                                        domain="[('partner_id', '=', bank_partner_id)]"
                                        attrs="{'invisible': [('move_type', 'not in', ('in_invoice', 'in_refund', 'in_receipt'))], 'readonly': [('state', '!=', 'draft')]}"/>
                                
                                </group>
                            </div>
                            <div class="col" name="col_3">
                                <group id="col_3" name="col_3">
                                    

                                    <div class="o_td_label">
                                        <label for="ref" string="Customer Reference" style="font-weight:bold;"
                                                attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'out_receipt'))]}"/>
                                        <label for="ref" string="Bill Reference" style="font-weight:bold;"
                                                attrs="{'invisible': [('move_type', 'not in', ('in_invoice', 'in_refund', 'in_receipt'))]}"/>
                                    </div>
                                    <field name="ref" nolabel="1"
                                            attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}"/>
                                    <!--  -->


                                    <label for="journal_id" groups="account.group_account_readonly" invisible="context.get('default_journal_id') and context.get('move_type', 'entry') != 'entry'"/>
                                    <div name="journal_div" class="d-flex" invisible="context.get('default_journal_id') and context.get('move_type', 'entry') != 'entry'">
                                        <field name="journal_id"
                                            groups="account.group_account_readonly"
                                            options="{'no_create': True}"
                                            attrs="{'readonly': [('posted_before', '=', True)]}"/>
                                        <span class="oe_inline o_form_label mx-3 oe_read_only"
                                            groups="base.group_multi_currency"> in </span>
                                        <!-- Bigger margin on the left because in edit mode the external link button covers the text -->
                                        <span class="oe_inline o_form_label mr-3 ml-5 oe_edit_only"
                                            groups="base.group_multi_currency"> in </span>
                                        <field name="currency_id"
                                            groups="base.group_multi_currency"
                                            attrs="{'readonly': [('posted_before', '=', True)]}"/>
                                    </div>
                                    
                                    <!--  -->
                                    <field name="tax_applies_on" attrs="{'invisible': [('move_type', '=', 'entry')]}"/>
                                    <!--  -->
                                    <field name="discount_type" widget="radio" attrs="{'readonly': [('state', '=', 'posted')], 'invisible': [('move_type', '=', 'entry')]}" />
                                    <!--  -->
                                    <label for="purchase_vendor_bill_id" string="Auto-Complete" class="oe_edit_only"
                                        attrs="{'invisible': ['|', ('state','!=','draft'), ('move_type', '!=', 'in_invoice')]}" />
                                    <field name="purchase_vendor_bill_id" nolabel="1"
                                        attrs="{'invisible': ['|', ('state','!=','draft'), ('move_type', '!=', 'in_invoice')]}"
                                        class="oe_edit_only"
                                        domain="partner_id and [('company_id', '=', company_id), ('partner_id','child_of', [partner_id])] or [('company_id', '=', company_id)]"
                                        placeholder="Select a purchase order or an old bill"
                                        context="{'show_total_amount': True}"
                                        options="{'no_create': True, 'no_open': True}"/>
                                    <!--  -->
                                    <label name="invoice_vendor_bill_id_label" for="invoice_vendor_bill_id" string="Auto-Complete" class="oe_edit_only"
                                            attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('move_type', '!=', 'in_invoice')]}"/>
                                    <field name="invoice_vendor_bill_id" nolabel="1" class="oe_edit_only"
                                            attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('move_type', '!=', 'in_invoice')]}"
                                            domain="[('company_id', '=', company_id), ('partner_id','child_of', [partner_id]), ('move_type','=','in_invoice')]"
                                            placeholder="Select an old vendor bill"
                                            options="{'no_create': True}" context="{'show_total_amount': True}"/>
                                    <!--  -->
                                    <field name="company_id" on_change="1" readonly='1'/>
                                    <!--  -->
                                    <field name="branch_id" />            
                                </group>
                            </div>
                        </div>
                    </div>
                </group>
            </xpath>
            <xpath expr="//group[@id='other_tab_group']/group[@name='sale_info_group']/field[@name='ref']" position="replace">
                
            </xpath>
            <xpath expr="//group[@id='other_tab_group']/group[@name='sale_info_group']/label[@for='ref']" position="replace">
                
            </xpath>

            <xpath expr="//button[@name='action_reverse']" position="after">
                <button name="action_view_debit_notes" string='Add Debit Note'
                                type='object' groups="account.group_account_invoice"
                                />
            </xpath>


        </field>
    </record>

</odoo>
