<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_user_reminder_form" model="ir.ui.view">
        <field name="name">view.account.user.reminder.form</field>
        <field name="model">account.user.reminder</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="company_id" required="1"/>
                            <field name="reminder_type" readonly="1" force_save="1" invisible="1"/>
                        </group>
                        <group>
                            <field name="branch_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="create_uid"/>
                            <field name="create_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Users">
                            <field name="account_line_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="sequence2" force_save="1" readonly="1" style="width:20px;"/>
                                    <field name="user_ids" widget="many2many_tags" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_account_user_reminder_tree" model="ir.ui.view">
        <field name="name">view.account.user.reminder.tree</field>
        <field name="model">account.user.reminder</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="company_id"/>
                <field name="branch_id"/>
            </tree>
        </field>
    </record>

    <record id="action_invoice_reminder" model="ir.actions.act_window">
        <field name="name">Invoice Reminder</field>
        <field name="res_model">account.user.reminder</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_reminder_type': 'invoice'}</field>
        <field name="domain">[('reminder_type', '=', 'invoice')]</field>
    </record>

    <record id="action_bill_reminder" model="ir.actions.act_window">
        <field name="name">Bill Reminder</field>
        <field name="res_model">account.user.reminder</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_reminder_type': 'bill'}</field>
        <field name="domain">[('reminder_type', '=', 'bill')]</field>
    </record>

    <menuitem id="menu_configuration_mode"
        name="Reminder"
        parent="account.menu_finance_configuration"
        sequence="6"/>

    <menuitem id="menu_invoice_reminder_mode"
        name="Invoice Reminder"
        parent="menu_configuration_mode"
        action="action_invoice_reminder"
        sequence="6"/>
    
    <menuitem id="menu_bill_reminder_mode"
        name="Bill Reminder"
        parent="menu_configuration_mode"
        action="action_bill_reminder"
        sequence="6"/>

</odoo>
