<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_category_property_form_inherit2" model="ir.ui.view">
        <field name="name">product.category.property.form.inherit2</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="purchase.view_category_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='property_account_creditor_price_difference_categ']" position="attributes">
                <attribute name="string">Gain Price Difference Account</attribute>
            </xpath>
            <xpath expr="//field[@name='property_account_creditor_price_difference_categ']" position="after">
                <field name="property_account_debitor_price_difference_categ" domain="[('deprecated','=',False)]" attrs="{'invisible':[('property_valuation', '=', 'manual_periodic')]}" groups="account.group_account_readonly"/>
            </xpath>
        </field>
    </record>

</odoo>
