<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_view_account_payment_form" model="ir.ui.view">
        <field name="name">inherit.account.payment.form</field>
        <field name="model">account.payment.term</field>
        <field name="inherit_id" ref="account.view_payment_term_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="inside">
                <group modifiers="{}">
                    <!-- <field name="company_id" domain="[('company_id', '=', self.env.company)]" /> -->
                    <field name="company_id" force_save='1' options="{'no_create': True}" can_create="false" can_write="false" modifiers="{}" id="company_id" readonly='1'/>
                    <field name="branch_id" readonly='0' options="{'no_create': True, 'no_create_edit': True}" />
                </group>
            </xpath>

            <xpath expr="//sheet/group/group/field[@name='company_id']" position="attributes">
                <attribute name="invisible">1</attribute>
                <!-- <attribute name="force_save">1</attribute> -->
            </xpath>
        </field>
    </record>
</odoo>