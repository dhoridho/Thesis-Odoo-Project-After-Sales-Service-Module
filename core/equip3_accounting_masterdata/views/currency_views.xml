<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mr_view_currency_rate_tree" model="ir.ui.view">
        <field name="name">mr_view_currency_rate_tree</field>
        <field name="model">res.currency.rate</field>
        <field name="inherit_id" ref="base.view_currency_rate_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='rate']" position="before">
                <field name="conversion"/>
                <field name="mr_rate" string="Rate"/>
            </xpath>
            <!-- <xpath expr="//field[@name='rate']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath> -->
        </field>
    </record>

    <record id="mr_view_currency_form" model="ir.ui.view">
        <field name="name">mr_view_currency_form</field>
        <field name="model">res.currency</field>
        <field name="inherit_id" ref="base.view_currency_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='rate']" position="after">
                <field name="conversion"/>
            </xpath>
            <xpath expr="//field[@name='active']" position="after">
                <field name="create_uid" string="Created By" readonly="1"/>
                <field name="create_date" string="Created Date" readonly="1"/>
            </xpath>

            <xpath expr="//sheet" position="after">
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </xpath>
        </field>
    </record>

    <record id="view_currency_tree" model="ir.ui.view">
        <field name="name">res.currency.tree</field>
        <field name="model">res.currency</field>
        <field name="inherit_id" ref="base.view_currency_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date']" position="after">
                <field name="conversion"/>
            </xpath>
        </field>
    </record>
</odoo>