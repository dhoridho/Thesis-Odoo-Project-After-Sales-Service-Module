<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account.menu_finance_configuration" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-parent-accounting-configuration</field> 
    </record>

    <menuitem id="account.account_invoicing_menu" name="Invoicing" 
              groups="account.group_account_manager,account.group_account_user,account.group_account_readonly,-account.group_account_invoice"
              parent="account.menu_finance_configuration"
              sequence="1">
        <menuitem id="account.menu_action_payment_term_form" action="account.action_payment_term_form" sequence="1"/>
        <menuitem id="account.menu_action_incoterm_open" action="account.action_incoterms_tree" groups="-account.group_account_manager" sequence="3"/>
    </menuitem>
    
    <menuitem id="account.account_banks_menu" 
              name="Banks" 
              groups="account.group_account_manager,account.group_account_user" 
              parent="account.menu_finance_configuration"
              sequence="2">
        <menuitem id="account.menu_action_account_bank_journal_form" action="account.action_new_bank_setting" groups="-account.group_account_manager" sequence="1"/>
        <menuitem id="account.action_account_reconcile_model_menu" action="account.action_account_reconcile_model" sequence="3" />
    </menuitem>
    
    <menuitem id="account.account_account_menu" 
              name="Accounting" 
              groups="-account.group_account_manager,account.group_account_user"
              parent="account.menu_finance_configuration" 
              sequence="3">
        <menuitem id="account.menu_action_account_form" action="account.action_account_form" groups="-account.group_account_readonly" sequence="1"/>
        <menuitem id="account.menu_action_tax_form" action="account.action_tax_form" sequence="2"/>
        <menuitem id="account.menu_action_account_journal_form" action="account.action_account_journal_form" groups="-account.group_account_manager" sequence="3"/>
        <menuitem id="account.account_report_folder" name="Reporting" groups="-account.group_account_readonly" sequence="4"/>
        <menuitem id="account.menu_action_currency_form" action="base.action_currency_form" name="Currencies" groups="-base.group_multi_currency" sequence="4"/>
        <menuitem id="account.menu_action_account_fiscal_position_form" action="account.action_account_fiscal_position_form" sequence="5"/>
        <menuitem id="account.menu_action_account_journal_group_list" active="False" action="account.action_account_journal_group_list" groups="-account.group_account_manager" sequence="7" />
    </menuitem>
    
    <menuitem id="account.root_payment_menu" name="Payments" groups="account.group_account_manager,account.group_account_user" parent="account.menu_finance_configuration"  sequence="4"/>
    
    
    <menuitem id="account.account_management_menu" 
              name="Management" 
              groups="account.group_account_manager,account.group_account_user"
              parent="account.menu_finance_configuration"
              sequence="5">
        <menuitem id="account.menu_product_product_categories" action="product.product_category_action_form" sequence="3"/>
        <menuitem id="account.menu_action_rounding_form_view" action="account.rounding_list_action" groups="-account.group_cash_rounding" sequence="4"/>
        <menuitem id="account.menu_configure_tax_report" name="Tax Report" action="account.action_configure_tax_report" groups="-base.group_no_one" sequence="5"/>
        <menuitem id="account.menu_action_analytic_lines_tree" name="Analytic Items" action="analytic.account_analytic_line_action_entries" groups="-analytic.group_analytic_accounting" sequence="35"/>
    </menuitem>
    
    <menuitem id="accounting_pdf_reports.menu_finance_reports_settings"
                  name="Financial Reports"
                  sequence="9"
                  groups="account.group_account_user,-account.group_account_manager"
                  parent="account.menu_finance_configuration"/>
    
    <menuitem id="sh_sync_fiscal_year.sh_fiscal_year_main_menu" 
              name="Periods" 
              parent="account.menu_finance_configuration"
              groups="account.group_account_manager,account.group_account_user"
              sequence="12" />

    <record id="res_config_settings_view_form_accessright_setting_inherit" model="ir.ui.view">
        <field name="name">mr_config_settings_view_form_accessright_setting_inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="equip3_accounting_accessright_setting.res_config_settings_view_form_accessright_setting" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='equp3_om_account_budget']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" 
                     id="equp3_accounting_masterdata_om_account_budget" 
                     groups="account.group_account_user">
                    
                    <div class="o_setting_left_pane">
                        <field name="group_om_account_budget"/>
                    </div>
                    <div class="o_setting_right_pane" id="equp3_accounting_masterdata_om_budget_management">
                        <label for="group_om_account_budget"/>
                        <div class="text-muted">
                            Use budgets to compare actual with expected revenues and costs
                        </div>
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[@id='equp3_om_account_budget']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="res_config_settings_view_form_accessright_setting_inherit2" model="ir.ui.view">
        <field name="name">mr_config_settings_view_form_accessright_setting_inherit2</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">

            <xpath expr="//div[@id='smallest_coinage_currency']" position="before">
                <div class="col-12 col-lg-6 o_setting_box" id="credit_note_expiry_date">
                    <div class="o_setting_left_pane">
                        <field name="credit_note_expiry_date"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="credit_note_expiry_date"/>
                        <div class="text-muted">
                            Activate Credit note expiry date
                        </div>
                    </div>
                </div>
            </xpath>

        </field>
    </record>



</odoo>
