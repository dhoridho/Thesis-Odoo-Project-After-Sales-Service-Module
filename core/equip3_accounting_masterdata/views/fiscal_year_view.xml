<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_fiscal_year_form_view" model="ir.ui.view">
        <field name="name">sh.fiscal.year.form.view</field>
        <field name="model">sh.fiscal.year</field>
        <field name="inherit_id" ref="sh_sync_fiscal_year.sh_fiscal_year_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group/group[1]" position="inside">
                <field name="hide_button" invisible='1'/>
            </xpath>

            <xpath expr="//header/button[@name='create_period']" position="replace">
                <button name="create_period" attrs="{'invisible': [('hide_button', '=', True)]}" string="Create Monthly Periods" type="object" class="oe_highlight" />
            </xpath>

            <xpath expr="//header/button[@name='create_period3']" position="replace">
                <button name="create_period3" attrs="{'invisible': [('hide_button', '=', True)]}" string="Create 3 Months Periods" type="object" class="oe_highlight" />
            </xpath>
            
            <field name="move_id" position="after">
                <field name="summary_move_id" readonly="1"/>
            </field>
                
        </field>
    </record>
    <record id="sh_fiscal_year_tree_view" model="ir.ui.view">
        <field name="name">sh.fiscal.year.tree.view</field>
        <field name="model">sh.fiscal.year</field>
        <field name="inherit_id" ref="sh_sync_fiscal_year.sh_fiscal_year_tree_view"/>
        <field name="arch" type="xml">
              <field name="date_end" position="after">
                <field name="company_id" />
            </field>
        </field>
    </record>
</odoo>