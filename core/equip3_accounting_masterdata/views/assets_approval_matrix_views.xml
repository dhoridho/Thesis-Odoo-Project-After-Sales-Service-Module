<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_form_assets_approval_matrix" model="ir.ui.view">
        <field name="name">assets.approval.matrix.form</field>
        <field name="model">assets.approval.matrix</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="company_id" force_save="1" />
                            <field name="branch_id" options="{'no_create': True, 'no_create_edit': True}" />
                        </group>
                        <group>
                            <field name="create_date" />
                            <field name="create_uid"/>
                            <field name="is_assets_approval" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Approval Matrix">
                            <field name="assets_approval_matrix_line_ids" context="{'assets_approval_matrix_line_ids': assets_approval_matrix_line_ids}">
                                <tree editable="bottom" class="class_container_approver_matrix">
                                    <field name="sequence" widget="handle"/>
                                    <field name="sequence2" force_save="1" readonly="1" class="approver_matrix_sequence"/>
                                    <field name="user_ids" widget="many2many_tags" />
                                    <field name="minimum_approver" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_tree_assets_approval_matrix" model="ir.ui.view">
        <field name="name">assets.approval.matrix.tree</field>
        <field name="model">assets.approval.matrix</field>
        <field name="arch" type="xml">
            <tree string="Assets Approval Matrix" >
                <field name ="name"/>
                <field name="company_id"/>
                <field name="branch_id"/>
            </tree>
        </field>
    </record>

    <record id="action_assets_approval_matrix" model="ir.actions.act_window">
        <field name="name">Assets Approval Matrix</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">assets.approval.matrix</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="approval_matrix_assets_configuration_menu"
            name="Assets Approval Matrix"
            parent="approval_matrix_accounting_configuration_menu"
            action="action_assets_approval_matrix"
            sequence="2"
            groups="equip3_accounting_accessright_setting.group_assets_approving_matrix"/>
    <record id="approval_matrix_assets_configuration_menu" model="ir.ui.menu">
        <field name="groups_id" eval="[(6,0, [ref('equip3_accounting_accessright_setting.group_assets_approving_matrix')])]" />
    </record>


</odoo>
