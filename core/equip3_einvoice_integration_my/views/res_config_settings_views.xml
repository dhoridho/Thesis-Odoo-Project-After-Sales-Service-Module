<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="einvoice_lhdn_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.lhdn.inherit.account</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="40"/>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]/div[@data-key='account']" position="inside">
                <h2>E-Invoice Integration</h2>
                <div class="row mt16 o_settings_container" name="e_invoice_integration_setting_container">
                    <div class="col-12 col-lg-12 o_setting_box" id="einvoice_integration_setting">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <div class="row mt8">
                                <field name="valid_lhdn" invisible='1'/>
                                <field name="invalid_lhdn" invisible='1'/>
                            </div>
                            <!-- <div class="row mt8">
                                <label for="is_pajak_express_integration" name="Pajak Express Integration" class="col-lg-3"/>
                                <field name="is_pajak_express_integration"/>
                                <field name="group_is_pajak_express_integration" invisible='1'/>
                            </div> -->
                            <div class="row mt8" >
                                <label for="lhdn_url" class="col-lg-3"/>
                                <field name="lhdn_url" />
                                <span class="o_light_label" attrs="{'invisible': [('invalid_lhdn', '!=', True)]}" style="color:red"> Authentication failed</span>
                                <span class="o_light_label" attrs="{'invisible': [('valid_lhdn', '!=', True)]}" style="color:green;"> Authentication is Valid !</span>
                            </div>
                            
                            <div class="row mt8" >
                                <label for="lhdn_client_id" class="col-lg-3"/>
                                <field name="lhdn_client_id" />
                            </div>
                            <div class="row mt8" >
                                <label for="lhdn_client_secret" class="col-lg-3"/>
                                <field name="lhdn_client_secret" password="True" />
                            </div>
                            <div class="row mt8" >
                                <button name="cek_lhdn_credential" type="object" string="Validate" class="btn-primary" />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
