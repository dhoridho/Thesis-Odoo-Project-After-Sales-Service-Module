<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="account_move_inherit" model="ir.ui.view">
            <field name="name">account.move.view.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

            <xpath expr="//header" position="after">
                <header>
                    <field name="e_invoice_status" widget="statusbar" align="right" attrs="{'invisible':[('is_hide_lhdn_status','=',True)]}"/>
                </header>
            </xpath>
           
                <xpath expr="//button[@name='action_register_payment']" position="after">
                     <button name="submit_lhdn" type="object" class="oe_highlight"  string="Submit E-Invoice" attrs="{'invisible':[('is_hide_lhdn','=',True)]}"/>
                </xpath>
                <xpath expr="//button[@name='button_draft']" position="after">
                     <button name="lhdn_check_invoice" type="object"   string="Check E-Invoice Status" attrs="{'invisible':[('is_lhdn_submit','=',False)]}"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="is_lhdn_submit" invisible="1"/>
                    <field name="is_hide_lhdn" invisible="1"/>
                    <field name="is_hide_lhdn_status" invisible="1"/>
                </xpath>
                <xpath expr="//button[@name='submit_lhdn']" position="after">
                     <button name="action_cancel_e_invoice" type="object" class="oe_highlight" confirm="Are you sure you want cancel this e-invoice?"  string="Cancel E-Invoice" attrs="{'invisible': [('e_invoice_status','!=','valid')]}"/>
                </xpath>
                <xpath expr="//button[@name='action_cancel_e_invoice']" position="after">
                     <button name="action_reject_e_invoice" type="object" class="oe_highlight" confirm="Are you sure you want reject this e-invoice?"  string="Reject E-Invoice" attrs="{'invisible': [('e_invoice_status','!=','valid')]}"/>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="E-Invoice">
                        <group>
                            <field name="uuid"/>
                            <field name="payload_text" force_save="1"/>
                            <!-- <field name="e_invoice_status" string="E-Invoice Status"/> -->
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
    

</odoo>
