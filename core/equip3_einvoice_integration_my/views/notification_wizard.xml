<odoo>
    <record id="einvoice_info_wizard_form" model="ir.ui.view">
        <field name="name">einvoice.info.wizard.form</field>
        <field name="model">einvoice.info.wizard</field>
        <field name="arch" type="xml">
        <form string="E-Invoice Notification Wizard" class="custom_wizard_einvoice">
            <group>
                <p>E-Invoice has been submitted to MyInvois Portal </p>            
            </group>
            <footer>
                <button string='OK' name='action_ok' type='object' class='btn-primary'/>
            </footer>
        </form>
        </field>
    </record>
    
    <record id="action_einvoice_info_wizard" model="ir.actions.act_window">
        <field name="name">Notification</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">einvoice.info.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="einvoice_info_wizard_form" />
    </record>
    
</odoo>

