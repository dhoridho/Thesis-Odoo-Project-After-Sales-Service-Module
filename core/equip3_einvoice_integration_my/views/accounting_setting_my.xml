<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="accounting_setting_my_view_form" model="ir.ui.view">
            <field name="name">accounting.setting.my.view.form</field>
            <field name="model">accounting.setting.my</field>
            <field name="arch" type="xml">
                <form create="0" delete="0">
                    <sheet>
                        <group>
                            <group name="login_tax_payer" string="Login as Taxpayer">
                                <field name="lhdn_url" required="1"/>
                                <field name="lhdn_client_id" required="1"/>
                                <field name="lhdn_client_secret" required="1"/>
                                <field name="status" readonly="1" force_save="1"/>
                                <button name="action_validate_login" string="Validate" class="oe_highlight" type="object" />
                                
                            </group>
                            <group name="validate_taxpayer_tin" string="Validate Taxpayer TIN">
                                <field name="taxpayer_tin" required="1" string="TIN"/>
                                <field name="taxpayer_type" required="1" string="Type"/>
                                <field name="taxpayer_number" required="1" string="BRN" attrs="{'invisible':[('taxpayer_type','!=','BRN')]}"/>
                                <field name="taxpayer_number" required="1" string="NRIC" attrs="{'invisible':[('taxpayer_type','!=','NRIC')]}"/>
                                <field name="taxpayer_number" required="1" string="PASSPORT" attrs="{'invisible':[('taxpayer_type','!=','PASSPORT')]}"/>
                                <field name="taxpayer_number" required="1" string="ARMY" attrs="{'invisible':[('taxpayer_type','!=','ARMY')]}"/>
                                <field name="tin_status" string="Status" readonly="1" force_save="1"/>
                                <button name="action_validate_tin" string="Validate" class="oe_highlight" type="object" />

                                
                            </group>
                            
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
    
    </data>

    <record id="accounting_setting_my_view_tree" model="ir.ui.view">
        <field name="name">accounting.setting.my.view.tree</field>
        <field name="model">accounting.setting.my</field>
        <field name="arch" type="xml">
            <tree string="Accounting MY Setting" create="0" delete="0">
                <field name="name" />
                
            </tree>
        </field>
    </record>


    <record id="accounting_setting_my_action" model="ir.actions.act_window">
        <field name="name">Accounting MY Setting</field>
        <field name="res_model">accounting.setting.my</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <menuitem
        id="accounting_my_setting_root"
        name="Accounting My Setting"
        parent="account.menu_finance"
        sequence="99"/>


    <menuitem
        id="accounting_my_setting_sub"
        name="Setting"
        parent="accounting_my_setting_root"
        action="accounting_setting_my_action"
        sequence="1"/>




    

</odoo>
