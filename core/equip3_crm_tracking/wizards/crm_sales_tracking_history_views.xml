<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_view_crm_sales_tracking_history" model="ir.actions.server">
        <field name="name">Salesperson Tracking</field>
        <field name="model_id" ref="equip3_crm_tracking.model_crm_sales_tracking_history"/>
        <field name="binding_model_id" ref="equip3_crm_tracking.model_crm_sales_tracking_history"/>
        <field name="state">code</field>
        <field name="binding_view_types">form</field>
        <field name="code">action = model.action_view_crm_sales_tracking()</field>
    </record>
    
    <record id="view_crm_sales_tracking_history_form" model="ir.ui.view">
        <field name="name">view.crm.sales.tracking.history.form</field>
        <field name="model">crm.sales.tracking.history</field>
        <field name="arch" type="xml">
            <form string="Salesperson Tracking" js_class="crm_sales_tracking_history">
                <header>
                    <button name="action_print_report"
                        type="object" string="Print Out" class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="row">
                        <div class="col-4 pl-4">
                            <group>
                                <field name="sales_ids" required="1" widget="many2many_tags"/>
                                <field name="date" required="1"/>
                            </group>
                            <label for="history_table_ids">History</label>
                            <field name="history_table_ids" readonly="1" options="{'no_open': True}">
                                <tree>
                                    <field name="name" nolabel="1"/>
                                    <field name="marker" widget="image" nolabel="1" style="width:50px;height:50px;"/>
                                    <field name="history_data" nolabel="1"/>
                                </tree>
                            </field>
                        </div>
                        <div class="col m-0 pl-0">
                            <div id="google_maps_container" class="w-100" style="height: 700px"></div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

</odoo>