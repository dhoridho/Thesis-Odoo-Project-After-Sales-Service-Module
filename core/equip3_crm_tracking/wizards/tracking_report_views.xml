<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_salesperson_history_action" model="ir.actions.act_window">
        <field name="name">Sales Person Tracking Wizard</field>
        <field name="res_model">crm.salesperson.tracking.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create Sales person Tracking Wizard.</p>
        </field>
    </record>
    <record id="crm_salesperson_report_form_view" model="ir.ui.view">
        <field name="name">Sales Person Tracking Form Wizard</field>
        <field name="model">crm.salesperson.tracking.report</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="sales_person" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                        <field name="current_datetime"/>
                    </group>
                </group>
                <footer>
                    <button name="view_track" string="View Tracking" type="object" class="oe_highlight" />
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
