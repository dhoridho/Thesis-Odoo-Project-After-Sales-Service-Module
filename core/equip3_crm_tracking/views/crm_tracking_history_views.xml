<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_salesperson_tracking_history_action" model="ir.actions.act_window">
        <field name="name">Sales Person Tracking History</field>
        <field name="res_model">crm.salesperson.tracking.history</field>
        <field name="view_mode">form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Display Sales person Tracking History.
            </p>
        </field>
    </record>

    <record id="crm_salesperson_tracking_history_view" model="ir.ui.view">
        <field name="name">crm.salesperson.tracking.history.form</field>
        <field name="model">crm.salesperson.tracking.history</field>
        <field name="arch" type="xml">
            <form string="Salesperson" create="false" edit="true" delete="false">
                <sheet>
                    <group string="Salesperson GPS Tracking">
                        <group>
                            <field name="sales_person_name"/>
                            <field name="history_date"/>
                            <div style="height:30px"></div>
                            <field name="track_hist"/>
                        </group>
                        <group>
                            <field style="display: none" name="track_lan_lng" class="track_hist_latlng" attrs="{'hidden': True}"  nolabel="1"/>
                             <div  id="track_hist_map_id" style="width: 500px;height: 300px"></div>
                            <template>
                                <script type="text/javascript" src="/equip3_crm_tracking/static/src/js/tracking_history.js" />
                                <script type="text/javascript">$('.o_control_panel').hide();</script>
                            </template>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>