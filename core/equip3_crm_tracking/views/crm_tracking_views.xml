<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_salesperson_tracking_action" model="ir.actions.act_window">
        <field name="name">Sales Person Tracking</field>
        <field name="res_model">crm.salesperson.tracking</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create Sales person Tracking Entry.
            </p>
        </field>
    </record>
    <record id="crm_salesperson_tracking_tree" model="ir.ui.view">
        <field name="name">crm.salesperson.tracking.tree</field>
        <field name="model">crm.salesperson.tracking</field>
        <field name="arch" type="xml">
            <tree export_xlsx="false">
                <field name="sales_person"/>
                <field name="current_datetime"/>
                <field name="location_name"/>
                <field name="latitude"/>
                <field name="longitude"/>
             </tree>
        </field>
    </record>
    <record id="crm_salesperson_tracking_view" model="ir.ui.view">
        <field name="name">crm.salesperson.tracking.form</field>
        <field name="model">crm.salesperson.tracking</field>
        <field name="arch" type="xml">
            <form string="Salesperson Tracking Form">
                <sheet>
                    <group>
                        <group>
                            <field name="sales_person" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                            <field name="current_datetime"/>
                            <field name="location_name"/>
                        </group>
                         <group>
                            <field name="latitude"/>
                            <field name="longitude"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="crm_salesperson_tracking_search_view" model="ir.ui.view">
        <field name="name">crm.salesperson.tracking.search</field>
        <field name="model">crm.salesperson.tracking</field>
        <field name="arch" type="xml">
            <search>
                <field name="sales_person"/>
                <field name="location_name"/>
             </search>
        </field>
    </record>
</odoo>