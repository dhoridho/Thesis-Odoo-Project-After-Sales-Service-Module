<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="crm_sales_tracking_visit_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <div class="oe_structure"/>
                    <table width="100%" height="15%">
                        <td>
                            <img t-if="doc.company_id.logo" t-att-src="image_data_uri(doc.company_id.logo)" alt="Logo" style="height:30%;width:40%"/>
                        </td>
                        <td style="text-align:left;"><h4>Address</h4>
                            <p t-if="doc.company_id.name" t-field="doc.company_id.name"/>
                            <p t-if="doc.company_id.street" t-field="doc.company_id.street"/>
                            <span t-if="doc.company_id.street2" t-field="doc.company_id.street2"/>
                            <p t-if="doc.company_id.city_id.name" t-field="doc.company_id.city_id.name"/>
                            <span t-if="doc.company_id.state_id.name" t-field="doc.company_id.state_id.name"/>
                            <span t-if="doc.company_id.zip" t-field="doc.company_id.zip"/>
                            <span t-if="doc.company_id.country_id.name" t-field="doc.company_id.country_id.name"/>
                            <h4>Mobile: <span t-field="doc.company_id.phone"/></h4>
                            <h4>Email: <span t-field="doc.company_id.email"/></h4>
                        </td>
                    </table>
                    <div text-align="center"><p style="font-size:35px; text-align:center;">VISIT HISTORY</p></div>
                    <hr/>
                    <div style="background-color:black;color:white;">
                        <span>Visit Date:</span><br/>
                        <span t-field="doc.date"/>
                    </div>
                    <span t-raw="doc.get_history_data()"></span>
                    <div style="text-align:center; position: absolute; bottom: 0px; left: 40%">
                        <hr/>
                        <span>Phone: <span t-field="doc.company_id.phone"></span></span><br/>
                        <span>Email: <span t-field="doc.company_id.email"></span></span><br/>
                        <span>Web: <span t-field="doc.company_id.website"></span></span><br/>
                    </div>
                </div>
            </t>
        </t>
    </template>
    <record id="paperformat_crm_sales_tracking_history_report" model="report.paperformat">
        <field name="name">CRM Sales Tracking History Report Paper</field>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">10</field>
        <field name="dpi">110</field>
    </record>
    <record id="action_print_crm_sales_tracking_visit_report" model="ir.actions.report">
        <field name="name">Visit History</field>
        <field name="model">crm.sales.tracking.history</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">equip3_crm_tracking.crm_sales_tracking_visit_report</field>
        <field name="report_file">equip3_crm_tracking.crm_sales_tracking_visit_report</field>
        <field name="print_report_name">'Visit History'</field>
        <field name="binding_model_id" ref="model_crm_sales_tracking_history"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="equip3_crm_tracking.paperformat_crm_sales_tracking_history_report"/>
    </record>
</odoo>