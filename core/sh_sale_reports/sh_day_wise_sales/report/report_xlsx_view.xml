<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="xls_day_wise_sales_xls" model="ir.ui.view">
        <field name="name">xls.day.wise.sales.xls</field>
        <field name="model">sh.day.wise.sales.xls</field>
        <field name="arch" type="xml">
            <form string="Xls Report">
                <group>
                    <field name="excel_file" invisible="1" />
                    <field name="file_name" readonly="1" filename="excel_file" invisible="1" />
                    <button name="so_day_wise_report" string="Sale Order Day Wise Xlsx" type="object" class="oe_highlight" />
                </group>
                <footer>
                    <button string="Close" class="oe_highlight" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_day_wise_sales_xls" model="ir.actions.act_window">
        <field name="name">Reports Excel</field>
        <field name="view_id" ref="xls_day_wise_sales_xls" />
        <field name="view_mode">form</field>
        <field name="res_model">sh.day.wise.sales.xls</field>
        <field name="target">new</field>
    </record>
</odoo>
