<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="external_layout">
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"></t>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"></t>
        </t>        
        <t t-call="equip3_school_report.attendance_report_header" />
        <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
            <t t-raw="0"/>
        </div>
    </template>

    <template id="attendance_report_header">
        <div class="header" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                <tbody>
                    <tr>
                        <td>
                            <center>
                                <table border="0" cellpadding="0" cellspacing="0" style="padding:0px 20px 0px 20px; margin:0; background:#fff; line-height:20px;" width="100%">
                                    <tr>
                                        <td align="left" colspan="2" t-attf-style="color:#{text_color or '#ffffff'}; padding:0px 0px;" valign="top">
                                            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                <tr>
                                                    <td align="left" style="color:#4D4D4F; padding: 10px 20px 0px 20px; border-right: 1px solid #D4D1D1;" valign="top">
                                                        <img style="max-height: 50px; margin-top: 8%;" t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.logo)" t-if="o.company_id.logo"/>
                                                        <br/>
                                                    </td>
                                                    <td style="padding: 10px 20px 0px 20px;width:40%" valign="top">
                                                        <p t-attf-style="text-transform:capitalize; color: #{theme_color or '#ffffff'}; font-weight:bold;margin:0; margin-bottom:5px;">Address</p>
                                                        <t t-call="general_template.templates_company_details"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </center>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </template>
    
    <template id="attendance_report_template_body">
        <t t-call="equip3_school_report.external_layout">
            <t t-foreach="docs" t-as="o">
                <t t-if="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id"></t>
                </t>
                <t t-if="not o or not 'company_id' in o">
                    <t t-set="company" t-value="res_company"></t>
                </t>
                <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color"/>
                <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color"/>
                <t t-set="company_color" t-value="o.company_id and o.company_id.company_color"/>
                <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color"/>
                <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color"/>
                <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color"/>
                <t t-set="text_color" t-value="o.company_id and o.company_id.text_color"/>
                <div class="page">
                    <hr style="border:1px solid black"/>
                    <h3 class="text-center" style="font-weight:bolder;">Class Attendance Summary</h3>
                    <br/>
                    <center>
                        <table width="60%">
                            <tbody>
                                <tr>
                                    <td width="15%" align="left" t-attf-style="font-size: 18px;">Intake</td>
                                    <td width="5%" align="center">:</td>
                                    <td width="35%" align="left" t-attf-style="font-size: 18px;"><span t-field="o.intake_id"/></td>
                                </tr>
                                <tr>
                                    <td width="15%" align="left" t-attf-style="font-size: 18px;">Academic Year</td>
                                    <td width="5%" align="center">:</td>
                                    <td width="35%" align="left" t-attf-style="font-size: 18px;"><span t-field="o.year_id"/></td>
                                </tr>
                                <tr>
                                    <td width="15%" align="left" t-attf-style="font-size: 18px;">Term</td>
                                    <td width="5%" align="center">:</td>
                                    <td width="35%" align="left" t-attf-style="font-size: 18px;"><span t-field="o.term_id"/></td>
                                </tr>
                                <tr>
                                    <td width="15%" align="left" t-attf-style="font-size: 18px;">Subject</td>
                                    <td width="5%" align="center">:</td>
                                    <td width="35%" align="left" t-attf-style="font-size: 18px;"><span t-field="o.subject_id.name"/></td>
                                </tr>
                                <tr>
                                    <td width="15%" align="left" t-attf-style="font-size: 18px;">Group Class</td>
                                    <td width="5%" align="center">:</td>
                                    <td width="35%" align="left" t-attf-style="font-size: 18px;"><span t-field="o.group_class"/></td>
                                </tr>
                                <tr>
                                    <td width="15%" align="left" t-attf-style="font-size: 18px;">Total Class</td>
                                    <td width="5%" align="center">:</td>
                                    <td width="35%" align="left" t-attf-style="font-size: 18px;"><span t-field="o.subject_total_class"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </center>
                    <br/>
                    <table width="100%" class="text-center">
                        <thead>
                            <tr>
                                <td width="20%" t-attf-style="padding: 5px 5px 5px 5px; font-size: 18px; border: 1px solid black;">
                                    <b>Student ID</b>
                                </td>
                                <td width="30%" t-attf-style="padding: 5px 5px 5px 5px; font-size: 18px; border: 1px solid black;">
                                    <b>Student Name</b>
                                </td>
                                <td width="10%" t-attf-style="padding: 5px 5px 5px 5px; font-size: 18px; border: 1px solid black;">
                                    <b>Present</b>
                                </td>
                                <td width="10%" t-attf-style="padding: 5px 5px 5px 5px; font-size: 18px; border: 1px solid black;">
                                    <b>Absent</b>
                                </td>
                                <td width="15%" t-attf-style="padding: 5px 5px 5px 5px; font-size: 18px; border: 1px solid black;">
                                    <b>Percentage</b>
                                </td>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="o.attendance_report_line" t-as="rl">
                                <tr>
                                    <td t-attf-style="padding: 5px 5px 5px 5px; font-size: 18px; border: 1px solid black;">
                                        <span t-field="rl.student_id.pid"/>
                                    </td>
                                    <td t-attf-style="padding: 5px 5px 5px 5px; font-size: 18px; border: 1px solid black;">
                                        <span t-field="rl.student_id.name"/> 
                                    </td>
                                    <td t-attf-style="padding: 5px 5px 5px 5px; font-size: 18px; border: 1px solid black;">
                                        <span t-field="rl.total_present"/>
                                    </td>
                                    <td t-attf-style="padding: 5px 5px 5px 5px; font-size: 18px; border: 1px solid black;">
                                        <span t-field="rl.total_absent"/>
                                    </td>
                                    <td t-attf-style="padding: 5px 5px 5px 5px; font-size: 18px; border: 1px solid black;">
                                        <span t-field="rl.presence_persentage"/>%
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
                <t t-call="general_template.templates_footer"/>
            </t>
        </t>
    </template>

    <template id="attendance_report_template">
        <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
                <t t-call="equip3_school_report.attendance_report_template_body"/>
            </t>
        </t>
    </template>

</odoo>
