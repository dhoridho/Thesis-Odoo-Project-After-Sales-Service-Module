<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="identity_card_views">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page" style="height: 2px;width: 120%">
                        <div class="oe_structure" style="margin-top: 10px"/>
                        <t t-foreach="o" t-as="student">
                        <br/><br/><br/>
                        <div class="box col-9" width="60%">
                            <div style="background-color: #ffffff; border: 2px solid black; border-radius: 50px; border-collapse: collapse; border-spacing: 0;">
                                <div text-align="left">
                                    <h2 style="padding-left: 20px; padding-top: 20px; font-size: 25px; color: black; font-family: 'Helvetica'; font-weight: bold;">
                                    <img src='/web/binary/company_logo' style="margin: 0px; height: auto; width: 250px;"/>
                                    HASHMICRO
                                    </h2>
                                </div>
                                <div style=" background-color: #dfdfdf; border-top: 2px solid black; border-bottom-left-radius: 50px; border-bottom-right-radius: 50px; border-collapse: collapse; border-spacing: 0;">
                                    <div class="row" float="left" align="left">
                                        <div class="column" style="padding-top: 15px;">
                                            <h2 style="font-family: 'Helvetica'; font-size: 25px; color: black; padding-left:50px;">
                                                IDENTITY CARD
                                            </h2>
                                            <div>
                                            <img t-if="student.photo" t-att-src="'data:image/png;base64,%s' % to_text(student.photo)"
                                                style="height:150px; width=150px; padding-left: 50px" />
                                            </div>
                                        </div>
                                        <div class="column" style="padding-top: 30px; padding-bottom: 20px;">
                                            <div style="font-family: 'Helvetica'; font-size: 15px; color: black; padding-left:50px; padding-bottom: 2px;">
                                                Name
                                                <div style="font-family: 'Helvetica'; font-size: 18px; color: black;">
                                                    <span t-field="student.name" />
                                                    <span t-field="student.middle" />
                                                    <span t-field="student.last" />
                                                </div>
                                            </div>
                                            <div style="font-family: 'Helvetica'; font-size: 15px; color: black; padding-left:50px; padding-bottom: 2px;">
                                                Student ID
                                                <div style="font-family: 'Helvetica'; font-size: 17px; color: black;">
                                                    <span t-field="student.pid" />
                                                </div>
                                            </div>
                                            <div class="row" style="font-family: 'Helvetica'; text-align: left; padding-bottom: 2px;">
                                                <div class="col" style="font-size: 15px; color: black; padding-left: 65px;">
                                                    Birth Date
                                                    <div style="font-family: 'Helvetica'; font-size: 17px; color: black;">
                                                        <span t-field="student.date_of_birth" />
                                                    </div>
                                                </div>
                                                <div class="col" style="font-size: 15px; color: black; padding-left: 0;">
                                                    Gender
                                                    <div style="font-family: 'Helvetica'; font-size: 17px; color: black;">
                                                        <span t-field="student.gender" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div style="font-family: 'Helvetica'; font-size: 15px; color: black; padding-left:50px;">
                                                School
                                                <div style="font-family: 'Helvetica'; font-size: 17px; color: black;">
                                                    <span t-field="student.school_id" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                      </t>
                   </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
