<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE html>

<odoo>
    <template id="external_layout_student_payslip">
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"></t>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"></t>
        </t>
    
        <t t-call="equip3_school_report.student_payslip_exclusive_header" />
        <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
            <t t-raw="0"/>
        </div>
        <t t-call="general_template.templates_footer"/>
    </template>

    <template id="student_payslip_exclusive_header">
        <div class="header" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                <tbody>
                    <tr>
                        <td>
                            <center>
                                <table border="0" cellpadding="0" cellspacing="0" style="padding:0px 20px 0px 20px; margin:0; background:#fff; line-height:20px; vertical-align:middle; float:none;" width="100%">
                                    <tr>
                                        <td align="left" colspan="2" t-attf-style="color:#{text_color or '#ffffff'}; padding:0px 0px;" valign="top">
                                            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                <tr>
                                                    <td align="left" style="color:#4D4D4F; padding: 10px 20px 0px 20px; border-right: 1px solid #D4D1D1;" valign="top">
                                                        <img style="max-height: 50px; margin-top: 8%;" t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.logo)" t-if="o.company_id.logo"/>
                                                        <br/>
                                                    </td>
                                                    <td style="padding: 10px 20px 0px 20px;width:40%" valign="top">
                                                        <p t-attf-style="text-transform:capitalize; color: #{theme_color or '#ffffff'}; font-weight:bold;margin:0; margin-bottom:5px;">Address</p>
                                                        <t t-call="general_template.templates_company_details"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </center>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </template>

    <template id="student_payslip_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="equip3_school_report.external_layout_student_payslip">
                    <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
                    <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color"/>
                    <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color"/>
                    <t t-set="company_color" t-value="o.company_id and o.company_id.company_color"/>
                    <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color"/>
                    <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color"/>
                    <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color"/>
                    <t t-set="text_color" t-value="o.company_id and o.company_id.text_color"/>
                    <div class="page" style="font-size:14px !important;">
                        <div class="oe_structure"/>
                        <t t-call="general_template.templates_watermark"/>                        
                        <br />
                        <hr style="border:1px solid black"/>
                        <div class="row" >
                            <div width="100%">
                            <table cellpadding="0" cellspacing="0" class="table mb-5" style="border: 2px solid transparent;  border-collapse: collapse; text-transform:capitalize; padding:15px;width:100%;">
                                <tr t-attf-style="page-break-inside: avoid !important;background-color: #ffffff; color: black;">
                                    <th colspan="3" t-attf-style="border: 2px solid transparent; page-break-inside: avoid !important;background-color: #ffffff; color: black;"><h2 class="text-left" style="color: black;font-weight:bold;">STUDENT INVOICE</h2></th>
                                </tr>
                                <br/>
                                <td style="margin-top: 20px; border: 2px solid transparent;"></td>
                                <tr t-attf-style="page-break-inside: avoid !important; background-color: #ffffff; color: white;">
                                    <td width="45%" t-attf-style="border: 2px solid transparent; page-break-inside: avoid !important;background-color: #ffffff; color: black;font-weight:bold;">Receipt No</td>
                                    <td width="5%" align="center" t-attf-style="border: 2px solid transparent;background-color: #ffffff; color: black;">:</td>
                                    <td width="60%" t-attf-style="border: 2px solid transparent; page-break-inside: avoid !important;background-color: #ffffff; color: black;">
                                        <span t-field="o.number"></span>
                                    </td>
                                </tr>
                                <tr t-attf-style="page-break-inside: avoid !important;background-color: #ffffff; color: black;">
                                    <td width="45%" t-attf-style="border: 2px solid transparent; page-break-inside: avoid !important;background-color: #ffffff; color: black;font-weight:bold;">Receipt Date</td>
                                    <td width="5%" align="center" t-attf-style="border: 2px solid transparent;background-color: #ffffff; color: black;">:</td>
                                    <td width="60%" t-attf-style="border: 2px solid transparent; page-break-inside: avoid !important;background-color: #ffffff; color: black;">
                                        <span t-esc="o.date"></span>
                                    </td>
                                </tr>
                                <tr t-attf-style="page-break-inside: avoid !important;background-color: #ffffff; color: black;">
                                    <td width="45%" t-attf-style="border: 2px solid transparent; page-break-inside: avoid !important;background-color: #ffffff; color: black;font-weight:bold;">Description</td>
                                    <td width="5%" align="center" t-attf-style="border: 2px solid transparent;background-color: #ffffff; color: black;">:</td>
                                    <td width="60%" t-attf-style="border: 2px solid transparent; page-break-inside: avoid !important;background-color: #ffffff; color: black;">
                                        <span t-field="o.name"></span>
                                    </td>
                                </tr>
                                <!--
                                <tr t-attf-style="page-break-inside: avoid !important;background-color: #ffffff; color: black;">
                                        <td width="45%" t-attf-style="border: 2px solid transparent; page-break-inside: avoid !important;background-color: #ffffff; color: black;font-weight:bold;">Currency</td>
                                        <td width="5%" align="center" t-attf-style="border: 2px solid transparent;background-color: #ffffff; color: black;">:</td>
                                        <td width="60%" t-attf-style="border: 2px solid transparent; page-break-inside: avoid !important;background-color: #ffffff; color: black;">
                                            <span t-field="o.currency_id"></span>
                                        </td>
                                    </tr>
                                -->
                                    <tr t-attf-style="page-break-inside: avoid !important;background-color: #ffffff; color: black;">
                                        <td width="45%" t-attf-style="border: 2px solid transparent; page-break-inside: avoid !important;background-color: #ffffff; color: black;font-weight:bold;">Student</td>
                                        <td width="5%" align="center" t-attf-style="border: 2px solid transparent;background-color: #ffffff; color: black;">:</td>
                                        <td width="60%" t-attf-style="border: 2px solid transparent; page-break-inside: avoid !important;background-color: #ffffff; color: black;">
                                            <span t-field="o.student_id"></span>
                                        </td>
                                    </tr>
                                    <tr t-attf-style="page-break-inside: avoid !important;background-color: #ffffff; color: black;">
                                        <td width="45%" style="border: 2px solid transparent;background-color: #ffffff; color: black;"><strong>Intake</strong></td>
                                        <td width="5%" align="center" style="border: 2px solid transparent;background-color: #ffffff; color: black;">:</td>
                                        <td width="60%" t-attf-style="border: 2px solid transparent; page-break-inside: avoid !important;background-color: #ffffff; color: black;">
                                            <span t-field="o.standard_id"></span>
                                        </td>
                                    </tr>
                              </table>
                            </div>
                            <!--
                            <div class="column" style="padding:10px; margin-top: 108px;margin-left: 5px;">
                                <table class="table mb-5 " style="border: 2px solid transparent;  border-collapse: collapse; text-transform:capitalize; padding:15px;margin-top: 18px;" width="100%">
                                    
                                </table>
                            </div>
                            -->
                        </div>
                        <br/>
                        <div class="row zero_min_height">
                            <div class="col-12">
                                <div style="border-bottom: 1px solid black;"/>
                            </div>
                        </div>
                        <br/>
                        <br/>

                        <table BORDERCOLOR="#{theme_color or '#000000'}" border="1" cellpadding="0" cellspacing="0" class="table table-bordered table-striped mb-5" style="border: 2px solid transparent;  border-collapse: collapse; text-transform:capitalize; padding:15px; margin-top:10px;" width="100%">
                            <thead style="border: 1px solid black;">
                                <tr t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'};font-weight:bolder;">
                                    <th><strong>No</strong></th>
                                    <th class="text-left" ><strong>Decription</strong></th>
                                    <th><strong>Tax</strong></th> 
                                    <th><strong>Amount</strong></th>                                    
                                </tr>
                            </thead>
                            <tbody  t-attf-style="page-break-inside: avoid !important; color: black;font-weight:bolder;">
                                <t t-set="count" t-value="0"/>
                                    <tr t-foreach="o.line_ids" t-as="line">
                                        <t t-set="count" t-value="count+1"/>
                                            <td class="text-center"><span t-esc="count"></span></td>
                                        <td align="center" >
                                            <span t-field="line.name"/>
                                        </td>
                                        <td align="center" >
                                            <span t-field="line.fee_tax_id"/>
                                        </td>
                                        <td align="center" >
                                            <span t-field="line.amount"/>
                                        </td>                                        
                                    </tr>
                            </tbody>
                            <table class="pull-right" style="font-weight:bold;width:40%; text-transform:capitalize; " t-att-style="'color: '+ text_color">
                                <tr>
                                    <td class="left" colspan="2" t-att-style="'padding:1px 80px 5px 0px;'">
                                        <strong><span>Subtotal</span></strong>
                                        <hr width="500%" color="black" size="1px" align="right" />
                                    </td>
                                    <td align="right" t-att-style="'padding:1px 0px 1px 10px;'">
                                        <span t-if="o.currency_id"
                                            t-field="o.total_untaxed"
                                            t-options='{"widget": "monetary","display_currency": o.currency_id}'/>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="left" colspan="2" t-att-style="'padding:1px 80px 1px 0px;'">
                                        <strong><span>Tax</span></strong>
                                        <hr width="500%" color="black" size="2px" align="right" />
                                    </td>        
                                    <td align="right" t-att-style="'padding:1px 0px 5px 10px;'">
                                        <span t-if="o.currency_id"
                                            t-field="o.amount_taxes"
                                            t-options='{"widget": "monetary","display_currency": o.currency_id}'/>
                                    </td>
                                </tr>                               
                                <tr>
                                    <td class="left" colspan="2" t-att-style="'padding:10px 80px 5px 0px;'">
                                        <strong><span>Total</span></strong>                                     
                                    </td>                                   
                                    <td align="right" t-att-style="'padding:10px 0px 5px 20px;'">
                                        <span t-if="o.currency_id"
                                            t-field="o.total"
                                            t-options='{"widget": "monetary","display_currency": o.currency_id}'/>
                                    </td>
                                </tr>
                            </table>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="student_payslip">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="equip3_school_report.student_payslip_report"/>
            </t>
        </t>
    </template>

</odoo>
