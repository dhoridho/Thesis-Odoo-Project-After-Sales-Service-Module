<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="print_final_grade_subject_weightage">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                
                <div class="header" t-att-style="'font-family:'+font_family+';font-size:'+str(font_size)+'px;'">
                    <table border="0" cellpadding="0" cellspacing="0" width="100%">
                        <tbody>
                            <tr>
                                <td>
                                    <center>
                                        <table border="0" cellpadding="0" cellspacing="0" style="padding:0px 20px 0px 20px; margin:0; background:#fff; line-height:20px; vertical-align:middle; float:none;" width="100%">
                                            <tr>
                                                <td align="left" colspan="2" t-attf-style="color:#{text_color or '#ffffff'}; padding:0px 0px;" valign="top">
                                                    <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                        <tr>
                                                            <td align="left" style="color:#4D4D4F; padding: 10px 20px 0px 20px; border-right: 1px solid #D4D1D1;" valign="top">
                                                                <img style="max-height: 50px; margin-top: 8%;" t-att-src="'data:image/png;base64,%s' % to_text(company['logo'])" t-if="company['logo']"/>
                                                                <br/>
                                                            </td>
                                                            <td style="padding: 10px 20px 0px 20px;width:40%" valign="top">
                                                                <p t-attf-style="text-transform:capitalize; color: #{theme_color or '#51565b'}; font-weight:bold;margin:0; margin-bottom:5px;">
                                                                    Address
                                                                </p>
                                                                <span style="text-transform:capitalize; padding:0px; margin:0; color: #51565b;">
                                                                    <t t-if="company and company['is_company_bold']">
                                                                        <strong>
                                                                            <span t-esc="partner"/>
                                                                        </strong>
                                                                    </t>
                                                                    <t t-if="not company['is_company_bold']">
                                                                        <span t-esc="partner"/>
                                                                    </t>
                                                                </span>
                                                                <div style="color: #51565b;">
                                                                    <span t-esc="street"/>
                                                                    <br/>
                                                                    <span t-esc="address"/>
                                                                    <br/>
                                                                </div>
                                                                <div style="color: #51565b;">
                                                                    <t t-if="mobile">
                                                                        <strong>Mobile:</strong>
                                                                        <span t-esc="mobile"/>
                                                                        <br/>
                                                                    </t>
                                                                    <t t-if="email">
                                                                        <strong>Email:</strong>
                                                                        <span t-esc="email"/>
                                                                        <br/>
                                                                    </t>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </td>
                                            </tr>
                                        </table>
                                    </center>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                
                <div class="page" style="page-break-after: always;">
                    <div class="oe_structure" />
                    <br/>
                    <hr width="100%" color="black"/>
                    <br/>
                    <div style="font-family: 'Helvetica'; text-align:center; text-transform:uppercase">
                        <p><b style="font-size: 20px;">RESULT FINAL GRADE</b></p>
                        <p><b style="font-size: 20px;"><span t-esc="weightage_id['subject_id'][1]"></span></b></p>
                        <p><b style="font-size: 20px;"><span t-esc="program_data"></span></b></p>
                    </div>
                    <br />
                    <table width="100%">
                        <tr>
                            <td width="25%" style="font-family: 'Helvetica';font-size: 18px;">
                                <b>Intake</b>
                            </td>
                            <td width="5%">
                                <b>:</b>
                            </td>
                            <td width="70%" style="font-family: 'Helvetica';font-size: 16px;">
                                <span t-esc="weightage_id['program_id'][1]"></span>
                            </td>
                        </tr>
                        <tr>
                            <td width="25%" style="font-family: 'Helvetica';font-size: 18px;">
                                <b>Group Class</b>
                            </td>
                            <td width="5%">
                                <b>:</b>
                            </td>
                            <!-- <td width="70%" style="font-family: 'Helvetica';font-size: 16px;">
                                <span t-esc="NULL"></span>
                            </td> -->
                        </tr>
                        <tr>
                            <td width="25%" style="font-family: 'Helvetica';font-size: 18px;">
                                <b>Academic Year</b>
                            </td>
                            <td width="5%">
                                <b>:</b>
                            </td>
                            <td width="70%" style="font-family: 'Helvetica';font-size: 16px;">
                                <span t-esc="weightage_id['year_id'][1]"></span>
                            </td>
                        </tr>
                        <tr>
                            <td width="25%" style="font-family: 'Helvetica';font-size: 18px;">
                                <b>Term</b>
                            </td>
                            <td width="5%">
                                <b>:</b>
                            </td>
                            <td width="70%" style="font-family: 'Helvetica';font-size: 16px;">
                                <span t-esc="weightage_id['term_id'][1]"></span>
                            </td>
                        </tr>
                    </table>
                    <br />
                    <hr width="100%" color="black"/>
                    
                    <t t-set="counter" t-value="1"/>
                    <t t-set="counter2" t-value="0"/>
                    <table class="table table-bordered mt-32">
                        <thead>
                            <tr>
                                <th style="font-family: 'Helvetica';font-size: 13px; width:5%; vertical-align:middle" t-att-rowspan="2" ><strong>No</strong></th>
                                <th align="center" style="font-family: 'Helvetica';font-size: 13px; width:40%; vertical-align:middle" t-att-rowspan="2"><strong>Student</strong></th>
                                <th align="center" style="font-family: 'Helvetica';font-size: 13px; width:20%"><strong>Assignment</strong></th>
                                <th align="center" style="font-family: 'Helvetica';font-size: 13px; width:20%"><strong>Exam</strong></th>
                                <th align="center" style="font-family: 'Helvetica';font-size: 13px; width:20%"><strong>Additional</strong></th>
                                <th align="center" style="font-family: 'Helvetica';font-size: 13px; width:20%"><strong>Final Score</strong></th>
                                <th align="center" style="font-family: 'Helvetica';font-size: 13px; width:20%; vertical-align:middle" t-att-rowspan="2"><strong>Grade</strong></th>                                         
                            </tr>
                            <tr>
                                <th align="center" style="font-family: 'Helvetica';font-size: 13px; width:20%"><strong><span t-esc="all_percentage_data[0]"></span><span>%</span></strong></th>
                                <th align="center" style="font-family: 'Helvetica';font-size: 13px; width:20%"><strong><span t-esc="all_percentage_data[1]"></span><span>%</span></strong></th>
                                <th align="center" style="font-family: 'Helvetica';font-size: 13px; width:20%"><strong><span t-esc="all_percentage_data[2]"></span><span>%</span></strong></th>
                                <th align="center" style="font-family: 'Helvetica';font-size: 13px; width:20%"><strong><span t-esc="all_percentage_data[3]"></span><span>%</span></strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="student_data" t-as="line">
                                <tr>
                                    <td>
                                        <span><t t-esc="str(counter) + '.'"></t></span>
                                    </td>
                                    <td align="center" style="font-family: 'Helvetica';font-size: 13px;">
                                        <span t-esc="line"></span>
                                    </td>
                                    <td align="center" style="font-family: 'Helvetica';font-size: 13px;">
                                        <span t-esc="assignment_data[counter2]"></span>
                                    </td>
                                    <td align="center" style="font-family: 'Helvetica';font-size: 13px;">
                                        <span t-esc="exam_data[counter2]"></span>
                                    </td>
                                    <td align="center" style="font-family: 'Helvetica';font-size: 13px;">
                                        <span t-esc="additional_exam_data[counter2]"></span>
                                    </td>
                                    <td align="center" style="font-family: 'Helvetica';font-size: 13px;">
                                        <span t-esc="final_score_data[counter2]"></span>
                                    </td>
                                    <td align="center" style="font-family: 'Helvetica';font-size: 13px;">
                                        <span t-esc="grade_data[counter2]"></span>
                                    </td>
                                </tr>
                                <t t-set="counter" t-value="counter+1"/>
                                <t t-set="counter2" t-value="counter2+1"/>
                            </t>
                        </tbody>
                    </table>
                    <br/>
                
                </div>
            </t>
        </t>
    </template>
</odoo>
