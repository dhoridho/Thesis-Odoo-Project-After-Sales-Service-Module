<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="identitycard_paper_format" model="report.paperformat">
        <field name="name">Identity Card</field>
        <field name="default" eval="True" />
        <field name="format">A7</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="margin_top">0</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">4</field>
        <field name="margin_right">4</field>
        <field name="header_line" eval="False" />
        <field name="orientation">Landscape</field>
        <field name="header_spacing">20</field>
        <field name="dpi">90</field>
    </record>

    <record id="school.report_student_student" model="ir.actions.report">
        <field name="name">Identity Card</field>
        <field name="model">student.student</field>
        <field name="binding_model_id" ref="school.model_student_student"/>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">equip3_school_report.identity_card_views</field>
        <field name="report_file">equip3_school_report.identity_card_views</field>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="equip3_school_report.identitycard_paper_format"></field>
        <field name="groups_id" eval="[(4, ref('school.group_school_administration')),
                                       (4, ref('school.group_school_teacher')),
                                       (4, ref('school.group_school_student'))]"/>
    </record>

</odoo>
