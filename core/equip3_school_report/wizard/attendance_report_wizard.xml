<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_form_attendance_report" model="ir.ui.view">
            <field name="name">attendance.report.wizard</field>
            <field name="model">attendance.report</field>
            <field name="arch" type="xml">
                <form string="Student Attendance Report">
                    <sheet>
                        <group>
                            <group>
                                <field name="intake_id" required='1'/>
                                <field name="year_id" required='1'/>
                                <field name="group_class" required='1' domain="[('id', 'in', related_group_class_ids)]"/>
                                <field name="attendance_report_line" invisible='1'>
                                    <tree>
                                        <field name="student_id"/>
                                        <field name="subject_id"/>
                                        <field name="total_attendance"/>
                                        <field name="total_present"/>
                                        <field name="total_absent"/>
                                        <field name="presence_persentage"/>
                                    </tree>
                                </field>
                            </group>
                            <group>
                                <field name="related_group_class_ids" invisible="1"/>
                                <field name="related_subject_ids" invisible="1"/>
                                <field name="subject_id" required="1" domain="[('id', 'in', related_subject_ids)]"/>
                                <field name="term_id" required='1'/>
<!--                                <field name="ems_subject_id" context="{'display_subject_name': True}" required='1'/>-->
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <group colspan="1">
                            <button name="action_print_attendance_report" string="Print Report" type="object" class="oe_highlight" />
                            <button class="oe_link" special="cancel" string="Cancel" />
                        </group>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_attendance_report" model="ir.actions.act_window">
            <field name="name">Student Attendance Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">attendance.report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="help">
                Click to Create Attendance Report.
            </field>
        </record>

        <menuitem id="menu_attendance_report"
                  name="Student Attendance Report"
                  parent="school_attendance.menu_attendance" 
                  action="action_attendance_report" 
                  groups="school.group_school_administration,school.group_school_teacher"
                  sequence="54"/>

</odoo>
