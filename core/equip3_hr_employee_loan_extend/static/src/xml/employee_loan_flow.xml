<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="loan_configuration_action">
        <div class="loan_flow_action">
            <div class="loan_flow_action_content d-flex flex-column">
                <div class="content-header">
                    <div class="d-flex p-3 w-100">
                        <span>Loan Flow</span>
                    </div>
                </div>
                <div class="content-body">
                    <div class="container">
                        <div class="row h-100">
                            <div class="accordion">
                                <div class="accordion-item accordion-master-data">
                                    <h2 class="accordion-header" data-target="collapseMasterData">
                                        <button class="accordion-button" type="button">
                                        Master Data
                                        </button>
                                    </h2>
                                    <div id="collapseMasterData" class="accordion-collapse show">
                                        <div class="accordion-body">
                                            <div class="accordion-content clearfix">
                                                <button name="hr_employee_loan.action_loan_type"
                                                    type="action"
                                                    class="btn btn-flow btn-default menu-button-loan-types">
                                                    <div class="button-img">
                                                        <img class="img-fluid" src="/equip3_hr_employee_loan_extend/static/src/img/hrm-loan-types.svg"/>
                                                    </div>
                                                    <div class="button-text">Loan Types</div>
                                                </button>
                                                <button name="hr_employee_loan.action_loan_policy"
                                                    type="action"
                                                    class="btn btn-flow btn-default menu-button-loan-policies">
                                                    <div class="button-img">
                                                        <img class="img-fluid" src="/equip3_hr_employee_loan_extend/static/src/img/hrm-loan-proofs.svg"/>
                                                    </div>
                                                    <div class="button-text">Loan Policies</div>
                                                </button>
                                                <button name="hr_employee_loan.action_loan_proof"
                                                    type="action"
                                                    class="btn btn-flow btn-default menu-button-loan-proofs">
                                                    <div class="button-img">
                                                        <img class="img-fluid" src="/equip3_hr_employee_loan_extend/static/src/img/hrm-loan-approval-policies.svg"/>
                                                    </div>
                                                    <div class="button-text">Loan Proofs</div>
                                                </button>
                                                <button name="equip3_hr_employee_loan_extend.loan_approval_matrix_act_window"
                                                    type="action"
                                                    class="btn btn-flow btn-default menu-button-loan-approval-matrix">
                                                    <div class="button-img">
                                                        <img class="img-fluid" src="/equip3_hr_employee_loan_extend/static/src/img/hrm-loan-approval-matrix.svg"/>
                                                    </div>
                                                    <div class="button-text">Loan Approval Matrix</div>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="accordion-item accordion-loan-flow">
                                    <h2 class="accordion-header" data-target="collapseAttendanceFlow">
                                        <button class="accordion-button" type="button">
                                        Loan Flow
                                        </button>
                                    </h2>
                                    <div id="collapseAttendanceFlow" class="accordion-collapse show">
                                        <div class="accordion-body">
                                            <div class="accordion-content width-node">                                                
                                                <!-- First Row -->
                                                <button name="hr_employee_loan.action_loan_todisburse"
                                                    type="action"
                                                    class="btn btn-flow btn-default menu-button-loan-to-disburse">
                                                    <div class="button-img">
                                                        <img class="img-fluid" src="/equip3_hr_employee_loan_extend/static/src/img/hrm-loan-to-disburse.svg"/>
                                                    </div>
                                                    <div class="button-text">Loan to Disburse</div>
                                                </button>
                                                <div class="nd_connector connector_line_right_loan_to_disburse">
                                                    <div class="nd_connector_line"></div>
                                                    <div class="nd_connector_arrow_right"></div>
                                                </div>

                                                <button name="equip3_hr_employee_loan_extend.action_loan_installment"
                                                    type="action"
                                                    class="btn btn-flow btn-default menu-button-loan-installment">
                                                    <div class="button-img">
                                                        <img class="img-fluid" src="/equip3_hr_employee_loan_extend/static/src/img/hrm-loan-instalment.svg"/>
                                                    </div>
                                                    <div class="button-text">Loan Installment</div>
                                                </button>
                                                <div class="nd_connector connector_line_right_loan_installment">
                                                    <div class="nd_connector_line"></div>
                                                    <div class="nd_connector_arrow_right"></div>
                                                </div>

                                                <button name="equip3_hr_employee_loan_extend.action_hr_full_loan_payment"
                                                    type="action"
                                                    class="btn btn-flow btn-default menu-button-multiple-payment">
                                                    <div class="button-img">
                                                        <img class="img-fluid" src="/equip3_hr_employee_loan_extend/static/src/img/hrm-loan-multiple-payment.svg"/>
                                                    </div>
                                                    <div class="button-text">Multiple Payment</div>
                                                </button>
                                                
                                                <!-- Second Row -->
                                                <button name="equip3_hr_employee_loan_extend.action_loan"
                                                    type="action"
                                                    class="btn btn-flow btn-default menu-button-loan-requests">
                                                    <div class="button-img">
                                                        <img class="img-fluid" src="/equip3_hr_employee_loan_extend/static/src/img/hrm-loan-request.svg"/>
                                                    </div>
                                                    <div class="button-text">Loan Requests</div>
                                                </button>
                                                <div class="nd_connector connector_line_right_loan_request">
                                                    <div class="nd_connector_line"></div>
                                                    <div class="nd_connector_arrow_right"></div>
                                                </div>

                                                <button name="hr_employee_loan.action_loan_toapprove"
                                                    type="action"
                                                    class="btn btn-flow btn-default menu-button-loan-requests-to-approve">
                                                    <div class="button-img">
                                                        <img class="img-fluid" src="/equip3_hr_employee_loan_extend/static/src/img/hrm-loan-request-to-approve.svg"/>
                                                    </div>
                                                    <div class="button-text">Loan Requests to Approve</div>
                                                </button>
                                                <div class="nd_connector connector_line_up_loan_requests_to_approve">
                                                    <div class="nd_connector_line"></div>
                                                </div>
                                                <div class="nd_connector connector_line_down_loan_requests_to_approve">
                                                    <div class="nd_connector_line"></div>
                                                </div>
                                                <div class="nd_connector connector_line_right_loan_requests_to_approve_1">
                                                    <div class="nd_connector_line"></div>
                                                    <div class="nd_connector_arrow_right"></div>
                                                </div>
                                                <div class="nd_connector connector_line_right_loan_requests_to_approve_2">
                                                    <div class="nd_connector_line"></div>
                                                    <div class="nd_connector_arrow_right"></div>
                                                </div>

                                                <button name="equip3_hr_employee_loan_extend.action_loan_cancelation"
                                                    type="action"
                                                    class="btn btn-flow btn-default menu-button-loan-cancellation">
                                                    <div class="button-img">
                                                        <img class="img-fluid" src="/equip3_hr_employee_loan_extend/static/src/img/hrm-loan-cancellation.svg"/>
                                                    </div>
                                                    <div class="button-text">Loan Cancelation</div>
                                                </button>
                                                <div class="nd_connector connector_line_right_loan_cancellation">
                                                    <div class="nd_connector_line"></div>
                                                    <div class="nd_connector_arrow_right"></div>
                                                </div>

                                                <button name="equip3_hr_employee_loan_extend.action_loan_cancelation_manager"
                                                    type="action"
                                                    class="btn btn-flow btn-default menu-button-loan-cancellation-to-approve">
                                                    <div class="button-img">
                                                        <img class="img-fluid" src="/equip3_hr_employee_loan_extend/static/src/img/hrm-loan-cancellation-to-approve.svg"/>
                                                    </div>
                                                    <div class="button-text">Loan Cancelation to Approve</div>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="accordion-item accordion-reporting">
                                    <h2 class="accordion-header" data-target="collapseReporting">
                                        <button name="reporting" class="accordion-button" type="button">
                                        Reporting
                                        </button>
                                    </h2>
                                    <div id="collapseReporting" class="accordion-collapse show">
                                        <div class="accordion-body">
                                            <div class="accordion-content width-node">

                                                <button name="equip3_hr_employee_loan_extend.action_employee_loan_details_pivot_report"
                                                    type="action"
                                                    class="btn btn-flow btn-default menu-button-rfm-analysis">
                                                    <div class="button-img">
                                                        <img class="img-fluid" src="/equip3_hr_employee_loan_extend/static/src/img/hrm-loan-analysis.svg"/>
                                                    </div>
                                                    <div class="button-text">Loan Analysis</div>
                                                </button>

                                                <div class="d-flex" style="width: 100%; gap:15px; ">
                                                    
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>