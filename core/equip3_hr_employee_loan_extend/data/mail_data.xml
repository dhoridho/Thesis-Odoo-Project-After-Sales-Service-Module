<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="0">
        <!--Email template for Loan request -->
        <record id="email_template_loan_approval_request" model="mail.template">
            <field name="name">Loan Approval Request - Send by Email</field>
            <field name="email_from">${ctx['email_from']|safe}</field>
            <field name="subject">${object.name or 'n/a' } Need Approval Loan Request</field>
            <field name="email_to">${ctx['email_to']|safe}</field>
            <field name="model_id" ref="equip3_hr_employee_loan_extend.model_employee_loan_details"/>
            <field name="body_html"><![CDATA[
<p>Dear ${ctx['approver_name']|safe},
<p>
</br>
Based on the Loan request,  ${object.name or 'n/a' }.
<p>
You have approval pending that need your decision to approve or reject this Loan request from ${ctx['emp_name']|safe}.</br>
${ctx['emp_name']|safe} has requested Loan for Loan type ${ctx['loan_type_name']|safe}, ${ctx['principal_amount']|safe} principal amount for ${ctx['duration']|safe} duration
<p>
You can approve or reject the loan request by clicking this button:
</p>
</br>
<p>
<a href="${ctx['url']|safe}" style="padding: 8px 12px; font-size: 12px; color: #FFFFFF; text-decoration: none !important; font-weight: 400; background-color: #875A7B; border: 0px solid #875A7B; border-radius:3px">View Loan</a>
</p>
</br>
<p>
Thank you
</p>
<p>
Have a good day
</p>
<p>
This is an automated message. Please do not reply to this email
</p>
    <br/><br/>

]]></field>
        </record>
    </data>

    <data noupdate="0">
        <!--Email template for Loan request Approved-->
        <record id="email_template_edi_loan_request_approved" model="mail.template">
            <field name="name">Loan Request Approved - Send by Email</field>
            <field name="email_from">${ctx['email_from']|safe}</field>
            <field name="subject">${object.name or 'n/a' } Approval Of Loan Request</field>
            <field name="email_to">${ctx['email_to']|safe}</field>
            <field name="model_id" ref="equip3_hr_employee_loan_extend.model_employee_loan_details"/>
            <field eval="True" name="auto_delete"/>
            <field name="body_html"><![CDATA[
<p>Dear ${object.employee_id.name},
<p>
</br>
We have received your request loan request for ${object.name or 'n/a' }.</br>
</br>
This notification serves as a confirmation that your request for your loan request has been Approved.</br>
</br>
</br>
We will look forward to seeing you again when you return.</br>
Thank You
</p>
    <br/><br/>

]]></field>
        </record>
    </data>
