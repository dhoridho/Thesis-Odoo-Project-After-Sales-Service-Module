<?xml version="1.0"?>
<odoo>
    <data noupdate="1">
        <!-- Loan Scheduler for Auto Follow Up Approver-->
        <record forcecreate="True" id="ir_cron_loan_auto_follow_up_approver" model="ir.cron">
            <field name="name">Auto Follow Up Loan Approver</field>
            <field name="model_id" ref="model_employee_loan_details"/>
            <field name="state">code</field>
            <field name="code">model.get_auto_follow_up_approver()</field>
            <field eval="False" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall" />
        </record>
        <!-- Loan Cancel Scheduler for Auto Follow Up Approver-->
        <record forcecreate="True" id="ir_cron_loan_cancel_auto_follow_up_approver" model="ir.cron">
            <field name="name">Auto Follow Up Loan Cancel Approver</field>
            <field name="model_id" ref="model_employee_loan_cancelation"/>
            <field name="state">code</field>
            <field name="code">model.get_auto_follow_up_approver()</field>
            <field eval="False" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall" />
        </record>
        <!-- Loan Cancel Scheduler for Auto Follow Up Approver-->
        <record forcecreate="True" id="ir_cron_full_loan_auto_follow_up_approver" model="ir.cron">
            <field name="name">Auto Follow Up Full Loan Approver</field>
            <field name="model_id" ref="model_hr_full_loan_payment"/>
            <field name="state">code</field>
            <field name="code">model.get_auto_follow_up_approver()</field>
            <field eval="False" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall" />
        </record>
    </data>
</odoo>