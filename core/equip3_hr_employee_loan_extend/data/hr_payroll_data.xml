<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="hr_rule_loan" model="hr.salary.rule">
            <field name="name">LOAN</field>
            <field name="sequence" eval="22"/>
            <field name="code">LOAN</field>
            <field name="category_id" ref="hr_payroll_community.Other"/>
            <field name="appears_on_payslip">True</field>
            <field name="payslip_type" eval="[(4, ref('equip3_hr_payroll_extend_id.employee_payslip'))]"/>
            <field name="category_on_payslip">income</field>
            <field name="tax_category" eval=""/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = payslip.env['hr.payslip'].get_loan(payslip.id, payslip.date_from, payslip.date_to)</field>
        </record>

        <record id="hr_rule_loan_ded" model="hr.salary.rule">
            <field name="name">Loan Deduction</field>
            <field name="sequence" eval="23"/>
            <field name="code">LOAN_DED</field>
            <field name="category_id" ref="hr_payroll_community.DED"/>
            <field name="appears_on_payslip">True</field>
            <field name="payslip_type" eval="[(4, ref('equip3_hr_payroll_extend_id.employee_payslip'))]"/>
            <field name="category_on_payslip">deduction</field>
            <field name="tax_category" eval=""/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = payslip.env['hr.payslip'].get_installment_loan(payslip.id, payslip.date_from, payslip.date_to)</field>
        </record>

    </data>
</odoo>