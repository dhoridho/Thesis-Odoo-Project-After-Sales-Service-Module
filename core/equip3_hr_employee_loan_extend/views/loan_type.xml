<odoo>
	<data>

        <record id="view_loan_type_form" model="ir.ui.view">
			<field name="name">loan.type.form</field>
			<field name="model">loan.type</field>
            <field name="inherit_id" ref="hr_employee_loan.view_loan_type_form"/>
			<field name="arch" type="xml">
                <xpath expr="//field[@name='payment_method']" position="after">
                    <field name="deduction_based_period" attrs="{'invisible': [('payment_method', '!=', 'payroll')], 'required': [('payment_method', '=', 'payroll')]}"/>
                </xpath>
                <xpath expr="//field[@name='disburse_method']" position="after">
                    <field name="apply_to"/>
                    <label for="years_of_service" string="Years of Service" attrs="{'invisible': [('apply_to', '!=', 'years_of_service')]}"/>
                    <div class="o_row" name="years_of_service" attrs="{'invisible': [('apply_to', '!=', 'years_of_service')]}">
                        <field name="years_of_service"/>
                        <span>Year(s) - </span>
                        <field name="months_of_service"/>
                        <span>Month(s) - </span>
                        <field name="days_of_service"/>
                        <span>Day(s)</span>
                    </div>
                </xpath>
                <xpath expr="//sheet/group[2]/separator[2]" position="attributes">
                    <attribute name="attrs">{'invisible': [('apply_to', '!=', 'employee_categories')]}</attribute>
                </xpath>
                <xpath expr="//field[@name='employee_categ_ids']" position="attributes">
                    <attribute name="attrs">{'invisible': [('apply_to', '!=', 'employee_categories')]}</attribute>
                </xpath>
                <xpath expr="//sheet/group[2]/separator[3]" position="attributes">
                    <attribute name="attrs">{'invisible': [('apply_to', '!=', 'employees')]}</attribute>
                </xpath>
                <xpath expr="//field[@name='employee_ids']" position="attributes">
                    <attribute name="attrs">{'invisible': [('apply_to', '!=', 'employees')]}</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>