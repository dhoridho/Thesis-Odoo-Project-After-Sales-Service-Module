<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="equip3_hr_employee_loan_extend_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.equip3_hr_employee_loan_extend</field>
            <field name="model">res.config.settings</field>
            <!-- <field name="priority" eval="70"/> -->
            <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Loan Approval" string="Loan Approval"
                         data-key="equip3_hr_employee_loan_extend">
                        
                        <h2>Loan Approval Setting</h2>
                        <div class="row mt16 o_settings_container" name="loan_approval_setting_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="loan_approval_control_setting"
                                 title="Loan Approval">
                                <div class="content-group">
                                     <div class="mt16">
                                        <div class="o_setting_left_pane">
                                            <field name="loan_approval_matrix"/>
                                        </div>
                                        <div class="o_setting_right_pane">
                                            <label for="loan_approval_matrix" string="Loan Approval Matrix"/>
                                        </div>
                                        <div class="o_setting_right_pane">
                                            <div class="text-muted">
                                                On/Off switch for approval matrix on Loan Requests, Loan Cancelation, and Multiple Payment.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mt16" attrs="{'invisible':[('loan_approval_matrix','=',False)]}">
                                        <label for="loan_type_approval" string="Approval Method"/>
                                        <field style="margin-left:10px;" name="loan_type_approval" class="oe_inline"
                                               required="1"/>
                                    </div>
                                    <div class="mt16"
                                         attrs="{'invisible':['|', ('loan_approval_matrix','=',False), ('loan_type_approval','!=','employee_hierarchy')]}">
                                        <label for="loan_level" string="Approval Levels"/>
                                        <field style="margin-left:16px;" name="loan_level" class="oe_inline"
                                               required="1"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <h2>Loan Rounding Fee</h2>
                        <div class="row mt16 o_settings_container" name="loan_roundingsetting_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="loan_rounding_control_setting" title="Loan Rounding Fee">
                                <div class="content-group">
                                    <div class="mt16">
                                        <label for="loan_rounding" string="Rounding"/>
                                        <field style="margin-left:10px;" name="loan_rounding" class="oe_inline"/>
                                    </div>
                                    <div class="mt16" attrs="{'invisible':[('loan_rounding','!=',True)]}">
                                        <label for="loan_rounding_type" string="Rounding Type"/>
                                        <field style="margin-left:16px;" name="loan_rounding_type" class="oe_inline" attrs="{'required':[('loan_rounding','=',True)]}"/>
                                    </div>
                                    <div class="mt16" attrs="{'invisible':[('loan_rounding','!=',True)]}">
                                        <label for="loan_rounding_digit" string="Number of Digit"/>
                                        <field style="margin-left:16px;" name="loan_rounding_digit" class="oe_inline" attrs="{'required':[('loan_rounding','=',True)]}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <h2>Notification</h2>
                    <div class="row mt16 o_settings_container"
                         name="loan_notification_wa_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box"
                             id="loan_notification_wa_setting">
                            <div class="o_setting_left_pane">
                                <field name="send_by_wa_loan"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Send By Whatsapp" for="send_by_wa_loan"/>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container"
                         name="loan_notification_email_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="loan_notification_email_setting">
                            <div class="o_setting_left_pane">
                                <field name="send_by_email_loan"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Send By Email" for="send_by_email_loan"/>
                            </div>
                        </div>
                    </div>
                    <!--                Auto Email Follow Cron-->
                    <div class="row mt16 o_settings_container" name="auto_follow_up_loan">
                        <div class="col-12 col-lg-6 o_setting_box" id="auto_follow_up_loan_setting">
                            <div class="content-group">
                                <div class="mt16">
                                    <field  name="auto_follow_up_loan"/>
                                    <label for="auto_follow_up_loan" string="Auto Follow Up" class="oe_inline" style="margin-left:10px;"/>
                                </div>
                                <div class="mt16" attrs="{'invisible':[('auto_follow_up_loan','!=',True)]}">
                                    <label for="interval_number_loan" string="Execute Every"/>
                                    <div attrs="{'invisible':[('auto_follow_up_loan','!=',True)]}">
                                        <field name="interval_number_loan" class="oe_inline" attrs="{'required':[('auto_follow_up_loan','=',True)]}"/>
                                        <field name="interval_type_loan" class="oe_inline" attrs="{'required':[('auto_follow_up_loan','=',True)]}"/>
                                    </div>
                                </div>
                                <div class="mt16" attrs="{'invisible':[('auto_follow_up_loan','!=',True)]}">
                                    <label for="number_of_repetitions_loan" string="Number of Repetitions"/>
                                    <field name="number_of_repetitions_loan" class="oe_inline" attrs="{'required':[('auto_follow_up_loan','=',True)]}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="equip3_hr_employee_loan_approval_config_settings_action" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'equip3_hr_employee_loan_extend', 'bin_size': False}</field>
        </record>

        <menuitem id="menu_hr_loan_global_settings" name="Settings"
                  parent="hr_employee_loan.policy_configure" sequence="11"
                  action="equip3_hr_employee_loan_approval_config_settings_action"
                  groups="base.group_system"/>
    </data>
</odoo>
