<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_loan_wizard_form" model="ir.ui.view">
            <field name="name">hr.loan.wizard.form</field>
            <field name="model">hr.loan.wizard</field>
            <field name="arch" type="xml">
                <form string="Confirmation Message">
                    <sheet>
                        <group>
                            <field name="feedback" attrs="{'required':[('is_reject','=',True)]}"/>
                            <field name="is_reject" invisible="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="submit" type="object" string="Submit" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="hr_loan_wizard_action" model="ir.actions.act_window">
            <field name="name">Confirmation Message</field>
            <field name="res_model">hr.loan.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

