<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- mrp.cost.actualization -->
    <record id="mrp_mca_multi_company_rule" model="ir.rule">
        <field name="name">Production MCA Multi-Company</field>
        <field name="model_id" ref="model_mrp_cost_actualization"/>
        <field name="domain_force">[
            '|', 
                ('company_id', '=', False), 
                ('company_id', 'in', company_ids)
        ]</field>
    </record>

    <record id="mrp_mca_multi_branch_rule" model="ir.rule">
        <field name="name">Production MCA Multi-Branch</field>
        <field name="model_id" ref="model_mrp_cost_actualization"/>
        <field name="domain_force">[
            '|',
                ('branch_id', '=', user.branch_id.id),
                ('branch_id', 'in', branch_ids)
        ]</field>
    </record>

</odoo>