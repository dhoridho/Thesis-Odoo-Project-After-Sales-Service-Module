<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_mrp_flexible_consumption_warning_form" model="ir.ui.view">
        <field name="name">view.mrp.flexible.consumption.warning.form</field>
        <field name="model">mrp.flexible.consumption.warning</field>
        <field name="inherit_id" ref="equip3_manuf_operations_contd.view_mrp_flexible_consumption_warning_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('m-2')]" position="replace">
                <div class="m-2">
                    You consumed/produced a different quantity/allocated cost than expected for the following products.
                    <b>Please confirm it has been done on purpose.</b>
                </div>
            </xpath>
            <xpath expr="//field[@name='byproduct_ids']//tree" position="inside">
                <field name="actual_allocated_cost" string="Actual Cost (%)"/>
                <field name="expected_allocated_cost" string="Expected Cost (%)"/>
            </xpath>
        </field>
    </record>
</odoo>