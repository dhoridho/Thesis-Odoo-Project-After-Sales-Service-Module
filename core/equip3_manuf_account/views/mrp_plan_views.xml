<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_mrp_plan_form" model="ir.ui.view">
        <field name="name">view.mrp.plan.form</field>
        <field name="model">mrp.plan</field>
        <field name="inherit_id" ref="equip3_manuf_operations_contd.mrp_plan_form_view_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='ppic_id']" position="after">
                <field name="analytic_tag_ids" optional="hide" groups="analytic.group_analytic_tags" widget="many2many_tags" string= "Analytic Group" required="1" options="{'no_create': True, 'no_create_edit':True}"/>
            </xpath>
            
            <xpath expr="//notebook" position="inside">
                <page name="cost_details" string="Cost Details" groups="equip3_manuf_accessright_settings.group_mrp_accountant" attrs="{'invisible': [('stock_valuation_layer_ids', '=', [])]}">
                    <field name="stock_valuation_layer_ids">
                        <tree string="Cost Details" default_order="sequence_type,mrp_production_id,mrp_workorder_id,mrp_consumption_id">
                            <field name="sequence_type" invisible="1"/>
                            <field name="mrp_production_id" string="Production Order"/>
                            <field name="mrp_workorder_id" string="Production Work Order"/>
                            <field name="mrp_consumption_id"/>
                            <field name="type"/>
                            <field name="product_id"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="value" string="Value"/>
                        </tree>
                    </field>
                </page>
            </xpath>

            <xpath expr="//page[@name='approval_matrix_lines']" position="after">
                <page name="estimated_cost" string="Estimated Cost">
                    <field name="estimated_cost_ids" force_save="1">
                        <tree string="Estimated Cost" decoration-bold="type == 'finished'">
                            <field name="plan_id" invisible="1"/>
                            <field name="production_id" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="level" invisible="1"/>
                            <field name="name" string=" "/>
                            <field name="product_id" optional="hide"/>
                            <field name="operation_id" optional="hide"/>
                            <field name="user_id" optional="hide"/>
                            <field name="type" optional="hide"/>
                            <field name="product_qty" optional="hide"/>
                            <field name="qty"/>
                            <field name="uom_name" string="UoM"/>
                            <field name="total_cost"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>