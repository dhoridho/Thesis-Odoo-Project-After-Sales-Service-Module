<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_category_form" model="ir.ui.view">
        <field name="name">view.product.category.form</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="account.view_category_property_form"/>
        <field name="arch" type="xml">
            <group name="account_property" position="after">
                <group string="Account Manufacturing Properties" attrs="{'invisible': [('hide_wip_account', '!=', False)]}">
                    <group>
                        <field name="hide_wip_account" invisible="1"/>
                        <field name="mrp_wip_account_id" attrs="{'invisible': [('hide_wip_account', '!=', False)],'required': [('hide_wip_account', '=', False)]}"/>
                    </group>
                </group>
            </group>
        </field>
    </record>
</odoo>