<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="mrp_production_workorder_form_view_inherit_oop" model="ir.ui.view">
        <field name="name">mrp.production.workorder.form.view.inherit.oop</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="equip3_manuf_operations_contd.mrp_production_workorder_form_view_inherit_contd"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_col_2']" position="after">
                <group >
                    <field name="analytic_group" widget="many2many_tags" string="Analytic Group"/>
                </group>
            </xpath>
            
            <xpath expr="//notebook" position="inside">
                <page name="cost_details" string="Cost Details" attrs="{'invisible': [('stock_valuation_layer_ids', '=', [])]}" groups="equip3_manuf_accessright_settings.group_mrp_accountant">
                    <field name="stock_valuation_layer_ids">
                        <tree string="Cost Details" default_order="sequence_type,mrp_consumption_id">
                            <field name="sequence_type" invisible="1"/>
                            <field name="mrp_consumption_id"/>
                            <field name="type"/>
                            <field name="product_id"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="value" string="Value"/>
                            <field name="account_move_id" invisible="1"/>
                            <field name="description" optional="hide"/>
                        </tree>
                    </field>
                </page>
            </xpath>

            <xpath expr="//page[@name='finished_goods']//field[@name='state']" position="before">
                <field name="allocated_cost"/>
                <field name="price_unit" string="Price Unit" optional="hide"/>
            </xpath>

            <xpath expr="//page[@name='byproduct']//field[@name='state']" position="before">
                <field name="allocated_cost"/>
                <field name="price_unit" string="Price Unit" optional="hide"/>
            </xpath>
        </field>
    </record>
        
</odoo>
