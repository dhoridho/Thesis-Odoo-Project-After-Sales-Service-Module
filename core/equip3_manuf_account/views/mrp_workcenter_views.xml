<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_mrp_workcenter_form" model="ir.ui.view">
        <field name="name">view.mrp.workcenter.form</field>
        <field name="model">mrp.workcenter</field>
        <field name="inherit_id" ref="equip3_manuf_operations.view_mrp_workcenter_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="before">
                <field name="type" class="oe_inline" widget="radio"/>
                <field name="asset_id" attrs="{'required': [('type','=', 'asset')], 'invisible': [('type','=', 'non_asset')]}" options="{'no_create': True, 'no_create_edit':True}"/>
            </xpath>

            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="attrs">{'invisible': [('type','=', 'asset')]}</attribute>
            </xpath>

            <xpath expr="//field[@name='oh_time']//field[@name='product']" position="attributes">
                <attribute name="domain">[('overhead_cost', '=', 'True')]</attribute>
            </xpath>

            <xpath expr="//field[@name='oh_time']/tree" position="inside">
                <field name="cost_hr"/>
            </xpath>

            <xpath expr="//field[@name='ov_material']//field[@name='product']" position="attributes">
                <attribute name="domain">[('overhead_cost', '=', 'True')]</attribute>
            </xpath>

            <xpath expr="//field[@name='ov_material']//field[@name='product']" position="after">
                <field name="product_price" readonly="1"/>
            </xpath>

            <xpath expr="//group[@name='costing']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>

            <xpath expr="//field[@name='labor_ids']//field[@name='user_id']" position="after">
                <field name="cost_per_hour"/>
            </xpath>
        </field>
    </record>

</odoo>