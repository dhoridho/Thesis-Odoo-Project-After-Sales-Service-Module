<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_consumption_form_account" model="ir.ui.view">
        <field name="name">mrp.consumption.form.account</field>
        <field name="model">mrp.consumption</field>
        <field name="inherit_id" ref="equip3_manuf_operations_contd.mrp_consumption_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='finished']" position="after">
                <page name="cost_details"
                        attrs="{'invisible': [('stock_valuation_layer_ids', '=', [])]}"
                        groups="equip3_manuf_accessright_settings.group_mrp_accountant"
                        string="Cost Details">
                    <field name="stock_valuation_layer_ids">
                        <tree string="Cost Details" order="type" default_order="sequence_type">
                            <field name="sequence_type" invisible="1"/>
                            <field name="type"/>
                            <field name="product_id"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="value" string="Value"/>
                            <field name="account_move_id" invisible="1"/>
                            <field name="description" optional="hide"/>
                        </tree>
                    </field>
                </page>
            </xpath>

            <xpath expr="//field[@name='move_finished_ids']//field[@name='location_rejected_id']" position="after">
                <field name="allocated_cost"/>
                <field name="price_unit" optional="hide"/>
            </xpath>

            <xpath expr="//field[@name='byproduct_ids']//field[@name='move_dest_ids']" position="after">
                <field name="allocated_cost"/>
                <field name="price_unit" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>