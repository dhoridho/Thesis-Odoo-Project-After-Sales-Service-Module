<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- product.template inherit form view -->
        <record id="bi_inherit_product_template_warranty_renewal_inherit" model="ir.ui.view">
            <field name="name">product.template.warranty.renewal</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="bi_warranty_registration.bi_inherit_product_template_warranty_renewal"/>
            <field name="arch" type="xml">
                <!-- Add your xpath here -->
                <xpath expr="//field[@name='allow_renewal']" position="attributes">
                    <attribute name="attrs">{'invisible': [('tracking', '!=', 'serial')]}</attribute>
                </xpath>
                <xpath expr="//field[@name='under_warranty']" position="attributes">
                    <attribute name="attrs">{'invisible': [('tracking', '!=', 'serial')]}</attribute>
                </xpath>
                <xpath expr="//field[@name='under_warranty']" position="after">
                    <field name="warranty_type" widget="radio" attrs="{'invisible':[('under_warranty', '=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
