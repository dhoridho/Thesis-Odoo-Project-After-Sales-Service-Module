<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- limit.request inherit form view -->
    <record id="view_credit_limit_request_form_inherits" model="ir.ui.view">
        <field name="name">limit.request.inherit.view.form</field>
        <field name="model">limit.request</field>
        <field name="inherit_id" ref="equip3_sale_other_operation.view_credit_limit_request_form"/>
        <field name="arch" type="xml">
            <!-- Add your xpath here -->
            <xpath expr="//group/group[1]" position="inside">
                <!-- Add your fields here -->
                <field name="state" invisible="1"/>
                <field name="bank_guarantee_amount" attrs="{'invisible':[('is_increase_credit_limit','!=',True)]}" readonly="1" force_save="1"/>
                <field name="new_bank_guarantee_amount" attrs="{'invisible':[('is_increase_credit_limit','!=',True)],'required':[('is_increase_credit_limit','=',True)],'readonly': [('state', '=', 'confirmed')]}"/>
                <field name="is_increase_credit_limit" invisible="1" readonly="1"/>
                <field name="last_expiration_date" attrs="{'invisible':[('is_increase_credit_limit','!=',True)]}" readonly="1" force_save="1"/>
                <field name="new_expiration_date" attrs="{'invisible':[('is_increase_credit_limit','!=',True)],'required':[('is_increase_credit_limit','=',True)],'readonly': [('state', '=', 'confirmed')]}"/>
            </xpath>
            <xpath expr="//field[@name='product_brand_ids']/tree/field[@name='last_credit_limit_amount']" position="after">
                <!-- Add your fields here -->
                <field name="state" invisible="1"/>
                <field name="request_allocation_bank_guarantee_amount" string="New Allocation Bank Guarantee" attrs="{'readonly': [('state', '=', 'confirmed')]}"/>
                <field name="last_request_allocation_bank_guarantee_amount" readonly="1" force_save="1"/>
            </xpath>
            <xpath expr="//field[@name='new_credit_limit_amount']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', '=', 'confirmed')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='sequence']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', '=', 'confirmed')]}</attribute>
            </xpath>
            <field name="limit_approval_matrix" position="after">
                <field name="description" position="move"/>
            </field>
<!--                <xpath expr="//notebook/page/group/field[@name='product_brand_ids']/tree/field[@name='']" position="inside">-->
        </field>
    </record>
</odoo>