<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="fmcg_reimbursement_tree" model="ir.ui.view">
            <field name="name">fmcg.reimbursement.tree</field>
            <field name="model">fmcg.reimbursement</field>
            <field name="arch" type="xml">
                <tree default_order="creation_date desc">
                    <field name="name"/>
<!--                    <field name="brand_id"/>-->
                    <field name="created_by"/>
                    <field name="creation_date"/>
                    <field name="state"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record id="fmcg_reimbursement_from" model="ir.ui.view">
            <field name="name">fmcg.reimbursement.from</field>
            <field name="model">fmcg.reimbursement</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="send_email" string="Send by Email" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'confirmed')]}"/>
                        <button name="action_print" string="Print" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'confirmed')]}"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_invoices"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-pencil-square-o"
                                    attrs="{'invisible': [('invoice_count', '=', 0)]}">
                                <field name="invoice_count" widget="statinfo" string="Invoices"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="vendor_id"/>
                                <field name="cust_target_id"/>
                                <field name="company_id" readonly="True"/>
                            </group>
                            <group>
                                <field name="created_by" readonly="True"/>
                                <field name="creation_date" readonly="True"/>
                                <field name="total_amount" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="customer_reward" string="Customer Reward">
                                <group>
                                    <field name="customer_reward_ids" nolabel="1">
                                        <tree editable="bottom">
                                            <field name="customer_id"/>
                                            <field name="voucher_id"/>
                                            <field name="reward_type"/>
                                            <field name="reward_amount"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                            <page name="operational" string="Operational">
                                <group>
                                    <field name="order_line_ids" nolabel="1" readonly="1">
                                        <tree create="false" edit="false" delete="false">
                                            <field name="sequence"/>
                                            <field name="product_template_id"/>
                                            <field name="name"/>
                                            <field name="product_uom_qty"/>
                                            <field name="product_uom"/>
                                            <field name="price_unit"/>
                                            <field name="price_total"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_fmcg_claim_to_principle" model="ir.actions.act_window">
            <field name="name">Claim to Principle</field>
            <field name="res_model">fmcg.reimbursement</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Reimbursement
                </p>
            </field>
        </record>

        <menuitem id="menu_sale_fmcg"
                  name="FMCG"
                  parent="sale.sale_menu_root"
                  sequence="3"/>

        <record id="equip3_fmcg_sale.menu_sale_fmcg" model="ir.ui.menu">
            <field name="equip_icon_class">o-hm-sidebar-sub-sales-customer</field>
        </record>

        <menuitem name="Claim to Principle" action="action_fmcg_claim_to_principle" id="menu_fmcg_reimbursement" parent="menu_sale_fmcg" sequence="1" />
    </data>
</odoo>