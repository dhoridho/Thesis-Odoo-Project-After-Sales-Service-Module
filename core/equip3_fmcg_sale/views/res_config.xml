<odoo>
    <data>
        <record id="sh_sale_config_credit_limit_form_inherit" model="ir.ui.view">
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="sh_sale_credit_limit.sh_sale_config_credit_limit_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='sale_credit_limit_email_alerts']/../../.." position="inside">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane" id="notifications_expiry_customer_bank_guarantee">
                            <field name="notifications_expiry_customer_bank_guarantee"/>
                        </div>
                        <div class="o_setting_right_pane" id="desc_notifications_expiry_customer_bank_guarantee">
                            <label for="notifications_expiry_customer_bank_guarantee"/>
                            <div class="text-muted">
                                Email Notification For Bank Guarantee
                            </div>
                            <div class="">
                                Default Limit:
                            </div>
                            <div id="notifications_expiry_customer_bank_guarantee_time" attrs="{'invisible':[('notifications_expiry_customer_bank_guarantee', '=', False)]}">
                                <field name="notifications_expiry_customer_bank_guarantee_time"/> Days
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>