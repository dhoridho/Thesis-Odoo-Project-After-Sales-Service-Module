<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_print_report_claim_to_principle" model="ir.actions.report">
        <field name="name">Claim to Principle</field>
        <field name="model">fmcg.reimbursement</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">equip3_fmcg_sale.report_claim_to_principle</field>
        <field name="report_file">equip3_fmcg_sale.report_claim_to_principle</field>
        <field name="print_report_name">'Claim to Principle - %s' % object.name</field>
        <field name="binding_model_id" ref="model_fmcg_reimbursement"/>
        <field name="binding_type">report</field>
    </record>

    <template id="claim_to_principle_reward_tem">
        <table BORDERCOLOR="#{theme_color or '#000000'}" border="1" cellpadding="0" cellspacing="0" class="table table-bordered" style="border:0.5px solid #ccc;  border-collapse: collapse; text-transform:capitalize; padding:15px;border-bottom:1px solid #ccc;" width="100%">
            <thead>
                <tr t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'};">
                    <t t-set="colspan" t-value="5"/>
                    <td align="left" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="35%">Customer</td>
                    <td align="right" t-attf-style="padding:5px 10px;border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="35%">Voucher</td>
                    <td align="right" t-attf-style="padding:5px 10px;border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="15%">Reward Type</td>
                    <td align="center" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="15%">Reward Amount</td>
                </tr>
            </thead>
            <tbody class="claim_to_principle_reward_tbody">
                <t t-foreach="o.customer_reward_ids" t-as="line">
                    <tr t-att-style="'page-break-inside: avoid !important; color: %s; background-color: %s '%(text_color, ol_color)  ">
                        <td class="text-left" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                            <span t-field="line.customer_id.name"/>
                        </td>
                        <td class="text-right" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                            <span t-field="line.voucher_id.name"/>
                        </td>
                        <td class="text-right" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                            <span t-field="line.reward_type"/>
                        </td>
                        <td class="text-right" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                            <span t-field="line.reward_amount"/>
                        </td>
                    </tr>
                </t>
            </tbody>
        </table>
    </template>

    <template id="claim_to_principle_operational_tem">
        <table BORDERCOLOR="#{theme_color or '#000000'}" border="1" cellpadding="0" cellspacing="0" class="table table-bordered" style="border:0.5px solid #ccc;  border-collapse: collapse; text-transform:capitalize; padding:15px;border-bottom:1px solid #ccc;" width="100%">
            <thead>
                <tr t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'};">
                    <t t-set="colspan" t-value="5"/>
                    <td align="center" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="8%">No.</td>
                    <td align="left" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="25%">Product</td>
                    <td align="left" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="25%">Description</td>
                    <td align="right" t-attf-style="padding:5px 10px;border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="10%">Quantity</td>
                    <td align="right" t-attf-style="padding:5px 10px;border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="10%">UoM</td>
                    <td align="right" t-attf-style="padding:5px 10px;border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="10%">Unit Price</td>
                    <td align="right" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="12%">Total Amount</td>
                </tr>
            </thead>
            <tbody class="sale_tbody">
                <t t-set="index_no" t-value="1"/>
                <t t-foreach="o.order_line_ids" t-as="line">
                    <tr t-att-style="'page-break-inside: avoid !important; color: %s; background-color: %s '%(text_color, ol_color)  ">
                        <t t-set="index_no" t-value="index_no+1"/>
                        <td class="text-center" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                            <span t-esc="index_no"/>
                        </td>
                        <td class="text-left" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                            <span t-field="line.product_template_id.name"/>
                        </td>
                        <td class="text-left" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                            <span t-field="line.name"/>
                        </td>
                        <td class="text-right" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                            <span t-field="line.product_uom_qty"/>
                        </td>
                        <td class="text-right" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                            <span t-field="line.product_uom.name"/>
                        </td>
                        <td class="text-right" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                            <span t-field="line.price_unit"/>
                        </td>
                        <td class="text-right" t-att-style="'padding:5px 10px; border:0.5px solid #ccc !important; border-right:0px solid #ccc !important;'">
                            <span t-field="line.price_total"/>
                        </td>
                    </tr>
                </t>
            </tbody>
        </table>
    </template>

    <template id="claim_to_principle_external_layout">
        <!-- Multicompany -->
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <t t-call="equip3_fmcg_sale.claim_to_principle_header"/>
        <div class="article o_report_layout_standard" t-att-data-oe-id="o and o.id" t-att-data-oe-model="o and o._name">
            <t t-raw="0"/>
        </div>
        <t t-call="general_template.template_footer"/>
    </template>
    <template id="claim_to_principle_header">
        <div class="header" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                <tbody>
                    <tr>
                        <td>
                            <center>
                                <table border="0" cellpadding="0" cellspacing="0" style="padding:0px 20px 20px 20px; margin:0; background:#fff; text-transform:uppercase; line-height:20px;" width="100%">
                                    <tr>
                                        <td align="left" colspan="2" style="color:#4D4D4F; padding:9px 0px 9px 0px;" valign="top">
                                            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                <tr>
                                                    <td align="left" style="color:#4D4D4F; padding: 30px 0px 0px 0px; margin:0 " valign="middle">
                                                        <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                            <tr>
                                                                <td align="left" style="color:#4D4D4F; padding:0 0px; margin:0 " valign="middle">
                                                                    <img style="max-height: 80px;" t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.invoice_logo) or to_text(o.company_id.logo)"/>
                                                                </td>
                                                            </tr>
                                                        </table>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </center>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </template>

    <template id="claim_to_principle_vendor_details">
        <p t-attf-style="text-transform:capitalize; color: #{theme_color or '#ffffff'}; font-weight:bold; margin:0; margin-bottom:5px; padding:10px 0px 0px 0px; border-top:1px solid #ececec;">
            <strong >Vendor address:</strong>
        </p>
        <t t-if="o.vendor_id">
            <span t-attf-style="text-transform:capitalize; padding:0px; margin:0; color: #51565b;">
                <t t-if="o.company_id and o.company_id.is_customer_bold">
                    <strong>
                        <span t-field="o.vendor_id"/>
                    </strong>
                </t>
                <t t-if="not o.company_id.is_customer_bold">
                    <span t-field="o.vendor_id"/>
                </t>
            </span>
            <p t-attf-style="color: #51565b;">
                <span t-esc="o._get_street(o.vendor_id)"/>
                <br/>
                <span t-esc="o._get_address_details(o.vendor_id)"/>
                <br/>
                <t t-if="o.vendor_id.mobile">
                    <strong>Mobile: </strong>
                    <span t-field="o.vendor_id.mobile"/>
                    <br/>
                </t>
                <t t-if="o.vendor_id.email">
                    <strong>Email: </strong>
                    <span t-field="o.vendor_id.email"/>
                    <br/>
                </t>
                <t t-if="o.vendor_id.vat">
                    <strong>Vat: </strong>
                    <span t-field="o.vendor_id.vat"/>
                </t>
            </p>
        </t>
    </template>

    <template id="report_claim_to_principle_main">
        <t t-call="equip3_fmcg_sale.claim_to_principle_external_layout">
            <t t-set="o" t-value="o.with_context({'lang':o.vendor_id.lang})"/>
            <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color"/>
            <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color"/>
            <t t-set="company_color" t-value="o.company_id and o.company_id.company_color"/>
            <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color"/>
            <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color"/>
            <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color"/>
            <t t-set="text_color" t-value="o.company_id and o.company_id.text_color"/>
            <div class="page" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                <div class="oe_structure"/>
                <t t-call="general_template.template_watermark"/>
                <div style="padding:0px 20px 20px 20px; margin:0; background:#fff; line-height:20px;" width="100%">
                    <div class="row left" style="padding:20px 0px 0 15px;">
                        <div class="column" t-attf-style="padding:15px 0px 0px 0px;line-height:18px; border-top:1px solid #{theme_color or '#ececec'};width:50%;" valign="top">
                            <t t-call="general_template.templates_company_details"/>
                            <t t-call="equip3_fmcg_sale.claim_to_principle_vendor_details"/>
                        </div>
                        <div align="right" class="column right" style="padding:15px 0px 15px 15px; width:50%;" valign="top">
                            <div t-attf-style="color:#fff; text-transform:capitalize; border-collapse: collapse; background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; width: 250px;">
                                <table border="0" t-attf-style="color:#fff; text-transform:capitalize; border-collapse: collapse; background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'}; width: 250px;">
                                    <tr>
                                        <td t-attf-style="text-align:right; font-weight:bold;padding:9px 15px;">
                                            <span t-field="o.name"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" style="background-color:#f2f2f2; height:4px;"/>
                                    </tr>
                                    <tr>
                                        <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                            <strong >Creation Date:</strong>
                                        </td>
                                        <td t-attf-style="text-align:right; padding:5px 15px;">
                                            <span t-field="o.creation_date"/>
                                        </td>
                                    </tr>
                                    <tr/>
                                    <tr>
                                        <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                            <span class="text-left">Customer Target:</span>
                                        </td>
                                        <td t-attf-style="text-align:right;padding:5px 15px;">
                                            <span t-field="o.cust_target_id.name"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td t-attf-style="padding:5px 15px; font-weight:bold;">
                                            <span class="text-left">Created By:</span>
                                        </td>
                                        <td t-attf-style="text-align:right;padding:5px 15px;">
                                            <p t-field="o.created_by.name"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div align="left" style="padding:20px 0px 0 0; font-weight:bold; width:100%;" valign="top">
                        <t t-call="equip3_fmcg_sale.claim_to_principle_operational_tem"/>
                    </div>
                    <div align="left" style="padding:20px 0px 0 0; font-weight:bold; width:100%;" valign="top">
                        <t t-call="equip3_fmcg_sale.claim_to_principle_reward_tem"/>
                    </div>
                </div>
                <div class="oe_structure"/>
            </div>
        </t>
    </template>
    <template id="report_claim_to_principle">
        <t t-call="web.html_container">
            <t t-as="o" t-foreach="docs">
                <t t-call="equip3_fmcg_sale.report_claim_to_principle_main" t-lang="o.vendor_id.lang"/>
            </t>
        </t>
    </template>
</odoo>