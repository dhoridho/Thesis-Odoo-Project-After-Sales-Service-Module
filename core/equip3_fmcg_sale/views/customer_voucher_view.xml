<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="customer_voucher_view_form_inherit" model="ir.ui.view">
            <field name="name">customer.voucher.view.form.inherit</field>
            <field name="model">customer.voucher</field>
            <field name="inherit_id" ref="equip3_sale_loyalty.customer_voucher_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_title')]" position="before">
                    <widget name="web_ribbon" title="Claimed" attrs="{'invisible': [('is_claimed','=',False)]}"/>
                </xpath>
                <field name="reward_type" position="after">
                    <field name="sale_order_id"/>
                </field>
                <field name="discount_line_product_id" position="after">
                    <field name="is_claimed" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="reward_amount" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                </field>
            </field>
        </record>
    </data>
</odoo>