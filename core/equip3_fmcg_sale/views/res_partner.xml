<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="view_partner_form_inherit_stock_life" model="ir.ui.view">
            <field name="name">view.partner.form.inherit.stock.life</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='sales_purchases']" position="inside">
                    <group name="container_stock_life">
                        <group string="Stock Life" name="stock_life" colspan="4">
                            <field name="stock_life_ids" nolabel="1">
                                <tree create="true" editable="bottom">
                                    <field name="category_ids" widget="many2many_tags"
                                           attrs="{'readonly': [('product_id_len', '=', True)]}"/>
                                    <field name="product_ids" widget="many2many_tags"
                                           attrs="{'readonly': [('category_id_len', '=', True)]}"/>
                                    <field name="minimum_days" required="1"/>
                                    <field name="is_customer" required="0" readonly="1" force_save="1"/>
                                    <!-- <field name="branch_ids" widget="many2many_tags"/> -->
                                    <field name="product_id_len" invisible="1"/>
                                    <field name="category_id_len" invisible="1"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
        <!-- res.partner inherit form view -->
        <record id="res_partner_sale_credit_limit_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.inherit.view.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="sh_sale_credit_limit.res_partner_sale_credit_limit_form"/>
            <field name="arch" type="xml">
                <!-- Add your xpath here -->
                <xpath expr="//page[@name='accounting']//group[1]" position="inside">
                    <group string="Bank Guarantee">
                        <field name="bank_guarantee_amount" required="1" readonly="1" force_save="1"/>
                        <field name="bank_guarantee_exp_date" readonly="1" force_save="1"/>
                        <field name="is_increase_credit_limit"/>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- res.partner inherit form view -->
        <record id="view_form_res_partner_inherit" model="ir.ui.view">
            <field name="name">res.partner.inherit.view.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="equip3_sale_other_operation.view_form_res_partner"/>
            <field name="arch" type="xml">
                <!-- Add your xpath here -->
                <xpath expr="//field[@name='product_brand_ids']/tree/field[@name='customer_credit_limit']" position="after">
                    <!-- Add your fields here -->
                    <field name="allocation_bank_guarantee_amount"/>
                </xpath>
                <xpath expr="//field[@name='product_brand_ids']/form/group/group/field[@name='customer_credit_limit']" position="after">
                    <!-- Add your fields here -->
                    <field name="allocation_bank_guarantee_amount"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>