<odoo>
    <!-- List/Tree View -->
    <record id="view_log_login_tree" model="ir.ui.view">
        <field name="name">Log Login Tree View</field>
        <field name="model">log.login</field>
        <field name="arch" type="xml">
            <tree create="false" edit="false">
                <field name="ip_address"/>
                <field name="user_id"/>
                <field name="state"/>
                <field name="time_login"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_log_login" model="ir.actions.act_window">
        <field name="name">Log Login</field>
        <field name="res_model">log.login</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_log_login_tree"/>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_log_login" name="History" parent="base.menu_users" action="action_log_login" sequence="100" groups="base.group_no_one"/>
</odoo>
