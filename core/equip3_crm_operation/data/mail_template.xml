<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="email_template_salesperson" model="mail.template">
        <field name="name">Salesperson</field>
        <field name="email_from">${ctx.get('email_from')}</field>
        <field name="email_to">${ctx.get('email_to')}</field>
        <field name="subject">Salesperson</field>
        <field name="model_id" ref="equip3_crm_operation.model_crm_lead"/>
        <field name="auto_delete" eval="True"/>
        <field name="body_html"><![CDATA[
            <p>Hello ${ctx.get('sales_name')}</p>
            </br>
            <p>You have overdue activity. Please check below and do the followed up.</p>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Leads
                        </th>
                        <th>
                            Activity Type - Summary
                        </th>
                        <th>
                            Duedate
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    % for act in ctx.get('list_act'):
                        <tr>
                            <td>
                                ${act['lead_name']}
                            </td>
                            <td>
                                ${act['name']}
                            </td>
                            <td>
                                ${act['duedate']}
                            </td>
                            <td>
                                <a href=${act['url']} style = "padding: 5px 10px; font-size: 12px; line-height: 18px;
            color: #FFFFFF; border-color:#875A7B; text-decoration: none; display: inline-block; 
            margin-bottom: 0px; font-weight: 400; text-align: center; vertical-align: middle; 
            cursor: pointer; white-space: nowrap; background-image: none; background-color: #875A7B;
            border: 1px solid #875A7B; border-radius:3px">View Lead</a>
                            </td>
                        </tr>
                    % endfor
                </tbody>
            </table>
            <p>If you have any questions, please don’t hestitate to contact us.</p>
            <p>Thank you,</p>
            ]]></field>
    </record>

