<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="EquipKanbanView.Group" t-inherit="web.KanbanView.Group" t-inherit-mode="primary">
        <xpath expr="//div[hasclass('o_kanban_header_title')]" position="attributes">
            <attribute name="class"></attribute>
            <attribute name="t-attf-class">o_kanban_header_title</attribute>
            <attribute name="t-att-style">'background-color: ' + widget.headerColor</attribute>
        </xpath>
        <xpath expr="//span[hasclass('o_column_title')]" position="after">
            <span class="o_column_length" t-if="widget.data_records.length"><t t-esc="widget.data_records.length"/></span>
        </xpath>
    </t>

</templates>