<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="EinsteinScore">
        <div>
            <span class="title ml-4">Hash Quality Score</span>
            <div class="container einstein_score justify-content-center mt-3">
                <div class="progress" t-att-data-percentage="score">
                    <span class="progress-left">
                        <span class="progress-bar"></span>
                    </span>
                    <span class="progress-right">
                        <span class="progress-bar"></span>
                    </span>
                    <div class="progress-value">
                        <span t-esc="score"/>
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-inherit="mail.Activity" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o_Activity_info')]" position="after">
            <t t-if="activity.attachments and activity.attachments.length > 0">
                <div class="o_Message_footer">
                    <AttachmentList
                        class="o_Message_attachmentList"
                        areAttachmentsDownloadable="true"
                        areAttachmentsEditable="true"
                        attachmentLocalIds="activity.attachments.map(attachment => attachment.localId)"
                    />
                </div>
            </t>
        </xpath>
    </t>
</templates>
