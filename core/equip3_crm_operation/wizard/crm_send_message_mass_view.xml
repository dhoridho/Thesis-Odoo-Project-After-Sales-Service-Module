<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
       <record id="crm_send_message_mass_view_form" model="ir.ui.view">
        <field name="name">crm.send.message.mass.view.form</field>
        <field name="model">crm.send.message.mass</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="connector_id" />
                    </group>
                    <field name="message_chat_ids" nolabel="1" widget="one2many_list">
                        <tree create="false">
                            <field name="opportunity_id"/>
                            <field name="partner_id" string="Contact Name"/>
                            <field name="connector_id" />
                            <field name="mobile" readonly="1" />
                            <field name="text" />
                            <field name="attachment_ids" widget="many2many_binary" />
                        </tree>
                        <form>
                            <sheet>
                                <group>
                                    <field name="opportunity_id" required="1"/>
                                    <field name="partner_id" />
                                    <field name="connector_id" readonly="1" />
                                    <field name="mobile" required="1" />
                                    <field name="whatsapp_template_id"/>
                                    <field name="text"/>
                                    <field name="attachment_ids"  widget="many2many_binary" />
                                </group>
                            </sheet>
                        </form>
                    </field>
                </sheet>
                <footer>
                    <button string="Send" name="send_mass" type="object" class="oe_highlight"/>
                </footer>
            </form>
        </field>
       </record>
    
    </data>
    

</odoo>
