<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- crm.stage inherit form view -->
        <record id="inherit_crm_stage_form" model="ir.ui.view">
            <field name="name">crm.stage.inherit.view.form</field>
            <field name="model">crm.stage</field>
            <field name="inherit_id" ref="crm.crm_stage_form"/>
            <field name="arch" type="xml">
                <!-- Add your xpath here -->
                <field name="team_id" position="after">
                    <field name="change_probability"/>
                    <field name="probability" attrs="{'invisible':[('change_probability','!=',True)],'required':[('change_probability','=',True)]}"/>
                </field>
            </field>
        </record>

        <!-- crm.stage inherit tree view -->
        <record id="crm_stage_tree_inherit" model="ir.ui.view">
            <field name="name">crm.stage.inherit.view.tree</field>
            <field name="model">crm.stage</field>
            <field name="inherit_id" ref="crm.crm_stage_tree"/>
            <field name="arch" type="xml">
                <!-- Add your xpath here -->
                <field name="team_id" position="before">
                    <field name="probability"/>
                </field>
            </field>
        </record>
    </data>
</odoo>