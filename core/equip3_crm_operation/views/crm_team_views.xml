<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- Add you code here -->
        <!-- crm.team inherit form view -->
        <record id="inherit_crm_team_view_form" model="ir.ui.view">
            <field name="name">inherit.crm.team.view.form</field>
            <field name="model">crm.team</field>
            <field name="inherit_id" ref="sales_team.crm_team_view_form"/>
            <field name="arch" type="xml">
                <!-- Add your xpath here -->
                <field name="user_id" position="attributes">
                    <attribute name="domain"></attribute>
                </field>
                <field name="user_id" position="before">
                    <field name="parent_team_id"/>
                </field>
                <field name="user_id" position="after">
                    <field name="additional_leader_ids" widget="many2many_tags"/>
                </field>
                <xpath expr="//page[@name='members']" position="after">
                    <page name="child" string="Child Team">
                        <group>
                            <field name="child_team_ids" readonly="1" nolabel="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="user_id"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                    <page name="salesperson_target" string="Salesperson Target">
                        <group>
                            <field name="list_crm_target_ids" readonly="1" nolabel="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="salesperson_id"/>
                                    <field name="based_on"/>
                                    <field name="main_target"/>
                                    <field name="state" string="Status"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="inherit_crm_team_view_tree" model="ir.ui.view">
            <field name="name">inherit.crm.team.tree</field>
            <field name="model">crm.team</field>
            <field name="inherit_id" ref="sales_team.crm_team_view_tree"/>
            <field name="field_parent">child_ids</field>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="res_name"/>
                </field>
                <field name="name" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
            </field>
        </record>
    </data>
</odoo>