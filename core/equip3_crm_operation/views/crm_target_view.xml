<?xml version="1.0"?>
<odoo>
    <record id="crm_target_tree_view" model="ir.ui.view">
        <field name="name">crm.target.tree.view</field>
        <field name="model">crm.target</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="salesperson_id"/>
                <field name="based_on"/>
                <field name="main_target" sum="Main Target"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="crm_target_form_view" model="ir.ui.view">
        <field name="name">crm.target.form.view</field>
        <field name="model">crm.target</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Request For Approval" class="oe_highlight"
                            name="button_request" type="object" attrs="{'invisible': ['|',('hide','=',True),('state','!=','draft')]}"/>
                    <button string="Approve" class="oe_highlight"
                            name="button_approve" type="object" attrs="{'invisible': ['|',('hide','=',True),('state','!=','waiting_approval')]}"/>
                    <button string="Reject" class="oe_highlight"
                            name="button_reject" type="object" attrs="{'invisible': ['|',('hide','=',True),('state','!=','waiting_approval')]}"/>
                    <button string="Reset to Draft" class="oe_highlight"
                            name="button_reset" type="object" attrs="{'invisible': ['|',('hide','=',True),('state','!=','rejected')]}"/>
                    <field name="state" widget="statusbar" attrs="{'invisible': [('state','=','rejected')]}" statusbar_visible="draft,waiting_approval,approved"/>
                    <field name="state_new" widget="statusbar" attrs="{'invisible': [('state','!=','rejected')]}" statusbar_visible="draft,waiting_approval,rejected"/>
                </header>
                <sheet>
                    <div class="oe_title oe_read_only">
                        <h1><field name="name" readonly="True"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="hide" invisible="1"/>
                            <field name="salesperson_id"/>
                            <field name="sale_team_id"/>
                            <field name="team_leader_id"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="based_on" widget="radio"/>
                        </group>
                        <group>
                            <field name="main_target"/>
                            <field name="current_achievement"/>
                            <field name="target_left"/>
                            <field name="created_on"/>
                            <field name="created_by"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_crm_target" model="ir.actions.act_window">
        <field name="name">My Target</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">crm.target</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_crm_target"
              name="My Target"
              parent="crm.crm_menu_root"
              action="action_crm_target"
              sequence="5"/>
</odoo>