<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.crm</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="5"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]/div[@data-key='crm']/h2[2]" position="replace">
            </xpath>
            <!-- <xpath expr="//div[hasclass('settings')]/div[@data-key='crm']/div/div[@id='crm_lead']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath> -->
            <xpath expr="//div[hasclass('settings')]/div[@data-key='crm']/div[3]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[hasclass('settings')]/div[@class='app_settings_block']/div[@name='convert_visitor_setting_container']" position="replace">
                <div></div>
            </xpath>
            <xpath expr="//div[hasclass('settings')]/div[@class='app_settings_block']/div[@name='generate_lead_setting_container']" position="replace">
                <div></div>
            </xpath>
            <xpath expr="//div[@data-string='CRM']/div[2]" position="after">
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="group_use_multi_salesperson_on_leads" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="group_use_multi_salesperson_on_leads" />
                            <div class="text-muted">
                                    Enable multi salesperson for leads
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_auto_follow_up"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_auto_follow_up"/>
                            <div class="text-muted">
                                    Enable auto follow up per Sales Team
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>