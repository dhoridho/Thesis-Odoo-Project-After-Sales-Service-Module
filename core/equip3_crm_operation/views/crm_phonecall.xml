<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="crm_case_phone_form_view_inherit" model="ir.ui.view">
        <field name="name">crm.case.phone.form.view.inherit</field>
        <field name="model">crm.phonecall</field>
        <field name="inherit_id" ref="crm_phonecall.crm_case_phone_form_view" />
        <field name="arch" type="xml">
             <xpath expr="//sheet/div[@name='button_box']/button[@name='action_button_convert2opportunity']" position="attributes">
                <attribute name="icon">o-hm-smart-crm-opportunity</attribute>
            </xpath>
            <xpath expr="//sheet/div[@name='button_box']/button[@name='%(crm_phonecall.phonecall_to_phonecall_act)d']" position="attributes">
                <attribute name="icon">o-hm-smart-all-calls</attribute>
            </xpath>
            <xpath expr="//sheet/div[@name='button_box']/button[@name='action_make_meeting']" position="attributes">
                <attribute name="icon">o-hm-smart-hrm-meetings</attribute>
            </xpath>
        </field>
    </record>

<!--    superbar phonecall-->
    <record id="superbar_logged_calls_search_inherit" model="ir.ui.view">
        <field name="name">crm.phonecall.search.inherit</field>
        <field name="model">crm.phonecall</field>
        <field name="inherit_id" ref="crm_phonecall.view_crm_case_phonecalls_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <searchpanel view_types="tree,kanban,pivot,graph">
                    <field name="team_id" string="Sales Team" />
                    <field name="user_id" string="Salesperson"/>
                </searchpanel>
            </xpath>
        </field>
    </record>

</odoo>
