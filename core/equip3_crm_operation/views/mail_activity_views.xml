<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mail_activity_view_form_popup" model="ir.ui.view">
        <field name="model">mail.activity</field>
        <field name="inherit_id" ref="mail.mail_activity_view_form_popup"/>
        <field name="arch" type="xml">
            <field name="summary" position="after">
                <field name="is_attachment_required" invisible="1"/>
                <field name="attachment_ids" widget="many2many_binary" attrs="{'required': [('is_attachment_required', '=', True)]}"/>
            </field>
        </field>
    </record>

    <record id="res_mail_activity_view_tree" model="ir.ui.view">
        <field name="name">res.mail.activity.view.tree</field>
        <field name="model">res.mail.activity</field>
        <field name="arch" type="xml">
            <tree string="Next Activities" decoration-danger="date_deadline &lt; current_date and state_2 != 'done'" decoration-success="date_deadline == current_date and state_2 != 'done'" decoration-muted="state_2 == 'done'" default_order="date_deadline" create="false">
                <field name="name"/>
                <field name="activity_type_id"/>
                <field name="summary"/>
                <field name="user_ids" widget="many2many_tags_avatar"/>
                <field name="customer_id"/>
                <field name="date_deadline"/>
                <field name="state_2"/>
                <field name="calendar_event_id" invisible="1"/>
                <field name="list_users_ids" widget="many2many_tags" invisible="1"/>
                <field name="list_partners_ids" widget="many2many_tags" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="res_mail_activity_view_form_popup" model="ir.ui.view">
        <field name="name">res.mail.activity.view.form.popup</field>
        <field name="model">res.mail.activity</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <form string="Log an Activity" create="false">
                <header>
                    <field name="state_2" widget="statusbar"/>
                </header>
                <sheet string="Activity">
                    <group>
                        <group>
                            <field name="activity_type_id" required="1" options="{'no_create': True, 'no_open': True}"/>
                            <field name="summary" placeholder="e.g. Discuss proposal"/>
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </group>
                        <group>
                            <field name="date_deadline"/>
                            <field name="user_id"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Mark as Done" name="action_done"
                                type="object" class="btn-primary"
                                attrs="{'invisible': [('state_2','!=','draft')]}"
                                context="{'mail_activity_quick_update': True}"/>
                        <button string="Cancel" name="action_cancel" type="object" attrs="{'invisible': [('state_2','!=','draft')]}" class="btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="mail_activity_view_tree_inherit" model="ir.ui.view">
        <field name="name">mail.activity.view.tree.inherit</field>
        <field name="model">mail.activity</field>
        <field name="inherit_id" ref="mail.mail_activity_view_tree"/>
        <field name="arch" type="xml">
            <field name="summary" position="after">
                <field name="opportunity_id" invisible="1"/>
                <field name="user_ids" widget="many2many_tags"  align="left" style="margin-bottom:5px;"/>
                <field name="customer_id"/>
            </field>
            <field name="date_deadline" position="after">
                <field name="list_user_ids" widget="many2many_tags" invisible="1"/>
                <field name="list_partner_ids" widget="many2many_tags" invisible="1"/>
                <field name="done" invisible="1"/>
            </field>
        </field>
    </record>

    <record id="action_res_mail_activity" model="ir.actions.act_window">
        <field name="name">Activity</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.mail.activity</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
