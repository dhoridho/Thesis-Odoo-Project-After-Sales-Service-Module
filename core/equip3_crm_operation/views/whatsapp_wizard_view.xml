<?xml version="1.0"?>
<odoo>

    <record id="acrux_chat_message_wizard_form" model="ir.ui.view">
        <field name="name">acrux.chat.message.wizard.form</field>
        <field name="model">acrux.chat.message.wizard</field>
        <field name="inherit_id" ref="acrux_chat_sale.acrux_chat_message_wizard_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="is_crm" invisible="1"/>
                <field name="phone" readonly="1" force_save="1" attrs="{'invisible':[('is_crm','!=',True)]}"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="attrs">{'invisible':[('is_crm','=',True)],'required':[('is_crm','!=',True)]}</attribute>
            </xpath>
        </field>
    </record>

    <record id="whatsapp_message_wizard_form" model="ir.ui.view">
        <field name="model">whatsapp.message.wizard</field>
        <field name="inherit_id" ref="ss_whatsapp_connector.whatsapp_message_wizard_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="company_name" readonly="True"/>
                <field name="crm_lead" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="attrs">{'invisible' : [('crm_lead', '=', True)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>