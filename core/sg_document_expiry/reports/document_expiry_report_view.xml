<odoo>

    <record id="employee_document_expirey_report" model="ir.actions.report">
        <field name="name">Document Expirey Report</field>
        <field name="model">employee.immigration</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sg_document_expiry.document_expirey_report</field>
    </record>

    <template id="document_expirey_report">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page">
                    <style>
                        .padding {
                        padding-top:3px;
                        padding-bottom:3px;
                        padding-left:3px;
                        padding-right:3px;
                        }

                        .border {
                        border:1px solid black;
                        border-collapse:collapse;
                        }

                        .text {
                        text-align:center;
                        }
                    </style>
                    <div class='row'>
                        <p style="font-size:20px;">
                            <center>
                                <b><u>Employee Document Expiry Report</u></b>
                            </center>
                        </p>
                        <br/><br/>
                        <table width="100%">
                            <tr class="border padding">
                                <th class="border padding text">Employee</th>
                                <th class="border padding text">Document Type</th>
                                <th class="border padding text">Expiry Date</th>
                            </tr>
                            <t t-foreach="documents" t-as="d">
                                <tr class="border padding">
                                    <td class="border padding text">
                                        <span t-esc="d.employee_id.name"/>
                                    </td>
                                    <td class="border padding text">
                                        <span t-esc="d.doc_type_id.name"/>
                                    </td>
                                    <td class="border padding text">
                                        <span t-esc="d.exp_date"/>
                                    </td>
                                </tr>
                            </t>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>

</odoo>
