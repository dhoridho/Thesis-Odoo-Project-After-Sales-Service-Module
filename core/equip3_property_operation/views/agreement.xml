<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- agreement inherit form view -->
        <record id="agreeement_property_form_inherit" model="ir.ui.view">
            <field name="name">agreement.property.inherit.view.form</field>
            <field name="model">agreement</field>
            <field name="inherit_id" ref="agreement_legal.partner_agreement_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='create_new_agreement']" position="after">
                    <field name="is_active_stage" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='start_date']" position="attributes">
                    <attribute name="attrs">{'readonly': ['|','|',('readonly', '=', True),('is_editable', '!=', True),('is_active_stage', '=', True)], 'required': [('is_template', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='assigned_user_id']" position="attributes">
                    <attribute name="string">Agent</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>