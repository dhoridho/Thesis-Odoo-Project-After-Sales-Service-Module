<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- property.maintenance.recurring calendar view -->
        <record id="property_maintenance_recurring_view_calendar" model="ir.ui.view">
            <field name="name">property.maintenance.recurring.view.calendar</field>
            <field name="model">property.maintenance.recurring</field>
            <field name="arch" type="xml">
                <calendar string="Calendar Description" date_start="start_date" date_stop="end_date" mode="month" color="id">
                    <field name="name"/>
                </calendar>
            </field>
        </record>

        <!-- property.maintenance.recurring tree view -->
        <record id="property_maintenance_recurring_view_tree" model="ir.ui.view">
            <field name="name">Maintenance Plan Tree View</field>
            <field name="model">property.maintenance.recurring</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="maintenance_cost"/>
                    <field name="responsible"/>
                    <field name="operation"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- property.maintenance.recurring form view -->
        <record id="property_maintenance_recurring_view_form" model="ir.ui.view">
            <field name="name">Maintenance Plan Form</field>
            <field name="model">property.maintenance.recurring</field>
            <field name="arch" type="xml">
                <form string="Maintenance Plan">
                    <header>
                        <button name="action_move_active" type="object" string="Active" class="oe_highlight" attrs="{'invisible':[('state', '!=', 'draft')]}"/>
                        <button name="action_move_cancel" type="object" string="Cancel" class="oe_highlight" attrs="{'invisible':[('state', '!=', 'active')]}"/>
                        <button name="action_move_draft" type="object" string="Draft" class="oe_highlight" attrs="{'invisible':[('state', '!=', 'cancel')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,active,cancel,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="maintenance_property_link" type="object" class="oe_stat_button" icon="fa-wrench">
                                <field string="Maintenance" name="maintenance_count" widget="statinfo"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" placeholder="e.g. Cleaning Room" attrs="{'readonly': [('state', '=', 'active')]}"/>
                            </h1>
                        </div>
                        <notebook>
                            <page string="Property">
                                <field name="list_property_ids">
                                    <tree editable="bottom" string="Property">
                                        <field name="property_id"/>
                                        <field name="contract_ids" widget="many2many_tags" domain="contract_ids_domain"/>
                                        <field name="contract_ids_domain" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Maintenance">
                                <group>
                                    <group>
                                        <field name="maintenance_cost" attrs="{'readonly': [('state', '=', 'active')]}" widget="monetary" />
                                        <field name="responsible" attrs="{'readonly': [('state', '=', 'active')]}" />
                                        <field name="operation" attrs="{'readonly': [('state', '=', 'active')]}" />
                                        <field name="maintenance_type_id" attrs="{'readonly': [('state', '=', 'active')]}" domain="[('operation_type', '=', operation)]"/>
                                    </group>
                                    <group>
                                        <field name="start_date" widget="date" attrs="{'readonly': [('state', '=', 'active')]}" />
                                        <field name="end_date" widget="date" attrs="{'readonly': [('state', '=', 'active')]}" />
                                        <field name="next_date" widget="date" attrs="{'readonly': True}" groups_id="[(6, 0, [ref('property_rental_mgt_app.group_manager')])]" />
                                        <field name="maintenance_schedule" attrs="{'readonly': [('state', '=', 'active')]}"/>
                                        <label for="frequency"/>
                                        <div>
                                            <field class="oe_inline" attrs="{'readonly':[('state', '=', 'active')]}" name="frequency" required="1"/>
                                            <span class="p-2" attrs="{'invisible':[('maintenance_schedule', '!=', 'daily')]}">days</span>
                                            <span class="p-2" attrs="{'invisible':[('maintenance_schedule', '!=', 'monthly')]}">month</span>
                                            <span class="p-2" attrs="{'invisible':[('maintenance_schedule', '!=', 'yearly')]}">year</span>
                                        </div>
                                    </group>
                                </group>
                                <group>
                                    <field name="description" attrs="{'readonly': [('state', '=', 'active')]}" />
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_recurring_maintenance" model="ir.actions.act_window">
            <field name="name">Maintenance Plan</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">property.maintenance.recurring</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form,calendar</field>
        </record>

        <record id="property_rental_mgt_app.menu_property_maintenance" model="ir.ui.menu">
            <field name="name">Property Maintenance</field>
            <field name="parent_id" ref="property_rental_mgt_app.menu_property_root"/>
        </record>

        <!-- property.maintanance inherit form view -->
        <record id="property_maintanance_inherit_form_operation" model="ir.ui.view">
            <field name="name">property.maintanance.inherit.view.form</field>
            <field name="model">property.maintanance</field>
            <field name="inherit_id" ref="property_rental_mgt_app.property_maintanance_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='property_id']" position="after">
                    <field name="contract_ids" widget="many2many_tags" domain="[('is_template', '=', False), ('property_id', '!=', False), ('property_id', '=', property_id),]"/>
                </xpath>
                <xpath expr="//field[@name='invoice_id']" position="attributes">
                    <attribute name="widget">many2many_tags</attribute>
                </xpath>
            </field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem
            id="menu_action_maintenance_property"
            name="Maintenance"
            parent="property_rental_mgt_app.menu_property_maintenance"
            action="property_rental_mgt_app.action_maintanance"/>
        
        <menuitem
            id="menu_action_recurring_maintenance"
            name="Maintenance Plan"
            parent="property_rental_mgt_app.menu_property_maintenance"
            action="equip3_property_operation.action_recurring_maintenance"/>
    </data>
</odoo>
