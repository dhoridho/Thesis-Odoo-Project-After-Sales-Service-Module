<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="1">
        <record id="recurring_maintenance_scheduler_ir_icon" model="ir.cron">
            <field name="name">Recurring Maintenance Property</field>
            <field name="model_id" ref="model_property_maintenance_recurring"/>
            <field name="state">code</field>
            <field name="code">model.create_maintenance()</field>
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="datetime.now() + (datetime.now(pytz.timezone('Asia/Singapore')).replace(hour=2, minute=15, second=00) - datetime.now(pytz.timezone('Asia/Singapore'))) % timedelta(hours=24)"/>
            <field name="numbercall">-1</field>
            <field eval="True" name="doall" />
        </record>
    </data>
</odoo>