<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- create.agreement.wizard inherit form view -->
        <record id="create_agreement_wizard_property_inherit" model="ir.ui.view">
            <field name="name">create.agreement.wizard.inherit.view.form</field>
            <field name="model">create.agreement.wizard</field>
            <field name="inherit_id" ref="agreement_legal.create_agreement_from_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='template_id']" position="attributes">
                    <attribute name="domain">template_id_domain</attribute>
                    <attribute name="attrs">{'invisible':[('property_book_for', '=', 'rent'),('property_id', '!=', False)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='template_id']" position="before">
                    <field name="property_id" force_save="1" readonly="1" attrs="{'invisible':['|',('property_book_for', '!=', 'rent'),('property_id', '=', False)]}"/>
                    <field name="recurring_type" invisible="1"/>
                    <field name="property_book_for" invisible="1"/>
                    <field name="daily_price" string="Daily Rent" attrs="{'invisible':['|',('recurring_type', '!=', 'daily'), ('property_id', '=', False)]}" force_save="1" readonly="1"/>
                    <field name="monthly_price" string="Monthly Rent" attrs="{'invisible':['|', ('recurring_type', '!=', 'monthly'), ('property_id', '=', False)]}" force_save="1" readonly="1"/>
                    <field name="yearly_price" string="Yearly Rent" attrs="{'invisible':['|', ('recurring_type', '!=', 'yearly'), ('property_id', '=', False)]}" force_save="1" readonly="1"/>
                    <label for="discount" attrs="{'invisible':['|','|', ('property_book_for', '!=', 'rent'),('property_id', '=', False), ('template_id', '=', False)]}"/>
                    <div class="o_row" attrs="{'invisible':['|','|', ('property_book_for', '!=', 'rent'),('property_id', '=', False), ('template_id', '=', False)]}">
                        <span>Discount in (%)<![CDATA[&nbsp;]]>
                        </span>
                        <field name="discount" class="oe_inline"/>
                    </div>  
                    <field name="total_price" attrs="{'invisible':['|',('property_book_for', '!=', 'rent'),('property_id', '=', False)]}" force_save="1" readonly="1"/>
                    <field name="start_date" required="1" attrs="{'invisible':['|',('property_book_for', '!=', 'rent'),('property_id', '=', False)]}"/>
                    <field name="partner_id" attrs="{'invisible':['|',('property_book_for', '!=', 'rent'),('property_id', '=', False)]}"/>
                </xpath>
                <xpath expr="//field[@name='template_id']" position="after">
                    <field name="property_price" attrs="{'invisible':['|',('property_book_for', '!=', 'sale'),('property_id', '=', False)]}" force_save="1" readonly="1"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="before">
                    <field name="template_id" attrs="{'invisible':['|',('property_book_for', '!=', 'rent'),('property_id', '=', False)]}"  domain="template_id_domain"/>
                    <field name="recurring_invoice_id" attrs="{'invisible':['|',('property_book_for', '!=', 'rent'),('property_id', '=', False)]}" force_save="1" readonly="1"/>
                    <field name="agent_id" attrs="{'invisible':['|',('property_book_for', '!=', 'rent'),('property_id', '=', False)]}"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="property_id" invisible="1"/>
                    <field name="template_id_domain" invisible="1"/>
                    <field name="partner_id" attrs="{'invisible':['|',('property_book_for', '!=', 'sale'),('property_id', '=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>