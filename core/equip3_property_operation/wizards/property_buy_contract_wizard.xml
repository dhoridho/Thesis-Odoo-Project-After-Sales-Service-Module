<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="property_buy_contract_wizard">
              <field name="name">property.buy.contract.form</field>
              <field name="model">property.buy.contract</field>
              <field name="arch" type="xml">
                <form>
                  <header>
                        <field name="state" widget="statusbar" statusbar_visible="avl,sold"/>
                  </header>
                    <sheet>
                        <group string="Sale Property Information">
                            <group>
                                <field name="property_id" readonly="1"/>
                                <field name="property_price" readonly="1"/>
                                <field name="purchaser_id" required="1"/>
                            </group>
                               <group>
                                <field name="contract_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                                <field name="name"/>
                            </group>
                        </group>
                        <footer>
                            <button name="create_buy_contract" type="object" string="Create Contract" icon="fa-pencil-square-o" class="oe_highlight" default_focus="1" context="{'create_from_wizard': 1}"/>
                            <button string="Cancel" special="cancel" icon="fa-times-circle"/>
                        </footer>                        
                    </sheet>
                </form>
             </field>
        </record>

    </data>
</odoo>