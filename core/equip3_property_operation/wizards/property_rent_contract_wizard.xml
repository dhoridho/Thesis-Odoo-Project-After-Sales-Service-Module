<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="property_rent_contract_wizard">
              <field name="name">property.rent.contract.form</field>
              <field name="model">property.rent.contract</field>
              <field name="arch" type="xml">
                <form>
                  <header>
                        <field name="state" widget="statusbar" statusbar_visible="avl,reserve"/>
                  </header>
                    <sheet>
                        <group string="Rent Property Information">
                            <group>
                                <field name="property_id" readonly="1"/>
                                <field name="deposite_daily" readonly="1" attrs="{'invisible':[('recurring_type','!=','daily')]}"/>
                                <field name="deposite" readonly="1" attrs="{'invisible':[('recurring_type','!=','monthly')]}"/>
                                <field name="deposite_yearly" readonly="1" attrs="{'invisible':[('recurring_type','!=','yearly')]}"/>
                                <field name="start_date" required="1"/>
                                <label for="discount" attrs="{'invisible':['|',('property_id', '=', False), ('contract_id', '=', False)]}"/>
                                <div class="o_row" attrs="{'invisible':['|',('property_id', '=', False), ('contract_id', '=', False)]}">
                                    <span>Discount in (%)<![CDATA[&nbsp;]]>
                                    </span>
                                    <field name="discount" class="oe_inline"/>
                                </div>  
                                <field name="total_price"/>
                                <field name="renter_id" required="1"/>
                            </group>
                            <group>
                                <field name="contract_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                                <field name="agent_id"/>
                                <field name="recurring_invoice_id" force_save="1" readonly="1"/>
                                <field name="recurring_type" invisible="1"/>
                                <field name="name"/>
                            </group>
                        </group>
                        <footer>
                            <button name="create_rent_contract" type="object" string="Create Contract" icon="fa-book" class="oe_highlight" default_focus="1" context="{'create_from_wizard': 1}"/>
                            <button string="Cancel" special="cancel" icon="fa-times-circle"/>
                        </footer>                        
                    </sheet>
                </form>
             </field>
        </record>

    </data>
</odoo>