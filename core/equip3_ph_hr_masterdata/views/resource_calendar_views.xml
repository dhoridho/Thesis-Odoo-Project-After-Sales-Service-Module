<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="equip3_ph_hr_masterdata_inherit_resource_calendar_form" model="ir.ui.view">
        <field name="name">equip3_ph_hr_masterdata_inherit.view.employee_form</field>
        <field name="model">resource.calendar.attendance</field>
        <field name="inherit_id" ref="resource.view_resource_calendar_attendance_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='day_period']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='date_to']" position="after">
                <field name="tolerance_for_late" widget="float_time" />
                <field name="break_from" widget="float_time" />
                <field name="break_to" widget="float_time" />
                <field name="minimum_hours" widget="float_time" />
            </xpath>
        </field>
    </record>

</odoo>
