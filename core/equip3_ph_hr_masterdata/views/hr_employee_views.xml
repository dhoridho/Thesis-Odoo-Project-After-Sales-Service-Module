<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="equip3_ph_hr_masterdata_inherit_view_employee_form" model="ir.ui.view">
        <field name="name">equip3_ph_hr_masterdata_inherit.view.employee_form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='mobile_phone']" position="before">
                <field name="employee_id" />
            </xpath>

            <xpath expr="//field[@name='identification_id']" position="after">
                <field name="tin" />
            </xpath>

            <xpath expr="//notebook/page[@name='personal_information']/group[1]" position="inside">
                <group name="social_cost_contribution" string="Social Cost Contribution">
                    <field name="sss_number"/>
                    <field name="philhealth_number"/>
                    <field name="pag_ibig_number"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
