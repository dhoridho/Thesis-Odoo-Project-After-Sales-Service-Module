<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <!-- Client Action -->
    <t t-name="survey_configuration_action">
        <div class="survey_flow_action">
            <div class="survey_action_content d-flex flex-column">
                <div class="content-header">
                    <div class="d-flex p-3 w-100">
                        <span>Survey Flow</span>
                    </div>
                </div>
                <div class="content-body">
                    <div class="container">
                        <div class="row h-100">
                            <div class="accordion">
                                <div class="accordion-item accordion-survey-flow">
                                    <h2 class="accordion-header" data-target="collapseSurveyFlow">
                                        <button class="accordion-button" type="button">
                                        Survey Flow
                                        </button>
                                    </h2>
                                    <div id="collapseSurveyFlow" class="accordion-collapse show">
                                        <div class="accordion-body">
                                            <div class="accordion-content width-node">                                             
                        
                                                <button name="equip3_hr_survey_extend.action_survey_form_survey_extend" 
                                                    type="action"
                                                    style="top:50px;left:400px"
                                                    class="btn btn-flow btn-default">
                                                    <div class="button-img">
                                                        <img class="img-fluid" src="/equip3_hr_survey_extend/static/src/img/icon-flow/survey.svg"/>
                                                    </div>
                                                    <div class="button-text">Surveys</div>
                                                </button>   
                                                   
                                                <button name="survey.action_survey_user_input" 
                                                    type="action"
                                                    style="top:50px;left:650px"
                                                    class="btn btn-flow btn-default">
                                                    <div class="button-img">
                                                        <img class="img-fluid" src="/equip3_hr_survey_extend/static/src/img/icon-flow/participations.svg"/>
                                                    </div>
                                                    <div class="button-text">Participations</div>
                                                </button>
                                                

                                                <div class="nd_connector" style="width: 110px;left: 545px;top: 75px">
                                                    <div class="nd_connector_line"></div>
                                                    <div class="nd_connector_arrow_right"></div>
                                                </div>
                                                 
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>