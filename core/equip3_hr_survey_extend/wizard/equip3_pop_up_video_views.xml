<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <template id='framed_page_youtube'>
         <iframe t-att-src="url"  marginheight="0" marginwidth="0" frameborder="0"  width="100%" height="1000"></iframe>
    </template>

    <record id="youtube_popup_video_wizard_view_form" model="ir.ui.view">
        <field name="name">youtube.popup.video.wizard.view.form</field>
        <field name="model">youtube.popup.video.wizard</field>
        <field name="arch" type="xml">
            <form string="Preview Video" create="false">
                <p style="color:red;"  class="text-left">*This is the digital video interview answer from the candidate.</p>
                <field name="youtube_url" invisible="1"/>
                <field name="embed_code" class="mt-2" widget="youtube_video_preview"/>
                <footer>
                    <button string="Close" special="cancel" type="button" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="youtube_popup_video_wizard_action" model="ir.actions.act_window">
        <field name="name">Preview</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">youtube.popup.video.wizard</field>
        <field name="view_id" ref="youtube_popup_video_wizard_view_form"/>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
    </data>
</odoo>