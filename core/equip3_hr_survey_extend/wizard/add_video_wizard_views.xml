<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="add_video_wizard_view_form" model="ir.ui.view">
            <field name="name">add.video.wizard.view.form</field>
            <field name="model">add.video.wizard</field>
            <field name="arch" type="xml">
               <!--  <style> 
                    .note-style, .note-font, .note-fontsize, .note-color, .note-para, .note-table, .note-insert, .note-history, .note-view {
                        display:none !important
                    }
                </style> -->
                <form string="Add Video" create="false">
                    <field name="survey_question_id" invisible="1"/>
                    <field name="is_video_created" invisible="1"/>
                    <p style="color:red;"  class="text-left" attrs="{'invisible': [('is_video_created' ,'=', True)]}">*Please click the Video Camera tools to start recording. Click Save button to upload the video into YouTube.</p> 
                    <field name="video_html" widget="html" attrs="{'readonly': [('is_video_created' ,'=', True)]}" force_save="1" />
                </form>
            </field>
        </record>
    </data>
</odoo>