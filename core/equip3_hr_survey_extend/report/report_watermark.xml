<?xml version='1.0' encoding='utf-8'?>
<odoo>
    
    <template id="report_watermark">
        <t t-set="company" t-value="user.company_id"/>
        <t t-if="company and company.is_show_watermark">
            <div class="watermark text-center" style="position:absolute; opacity:0.25; width:100%; height:auto; z-index:1000;bottom:-600px; left:-10px;">
                <t t-if="company.watermark == 'logo'">
                    <img style="max-height: 500px; height:auto;" t-att-src="'data:image/png;base64,%s' %  to_text(company.watermark_logo)" t-if="company"/>
                </t>
                <t t-if="company.watermark != 'logo'">
                    <span t-att-style="'font-size:'+str(company.watermark_text_font_size)+'em; color:'+company.watermark_text_color">
                        <span t-field="company.watermark_text" t-if="company.watermark == 'text'"/>
                        <span t-field="company.state" t-if="company.watermark == 'status'"/>
                    </span>
                </t>
            </div>
        </t>
        <!-- <div class="watermark text-center" style="position:absolute; opacity:0.25; width:100%; height:auto; z-index:1000;bottom:-600px;">
            <img t-if="company.logo" 
                t-att-src="image_data_uri(company.logo)"
                alt="Logo"/>
        </div> -->
    </template>

</odoo>