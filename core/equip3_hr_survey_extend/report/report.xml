<odoo>
	<template id="report_test_result" >
        <t t-call="web.html_container">
            <div class="article o_report_layout_standard" t-att-data-oe-model="doc and doc._name" t-att-data-oe-id="doc and doc.id">
                <t t-call="equip3_hr_survey_extend.report_test_result_header"/>
                <t t-foreach="docs" t-as="doc">    
                    <t t-set="i" t-value="1"/>
                
                    <div class="page">

                        <style>
                            @import url('https://fonts.googleapis.com/css2?family=Roboto+Serif:opsz,wght@8..144,500&amp;display=swap');

                            *{
                                font-family: 'Roboto Serif', serif;
                            }
                            .divTable{
                                display: table;
                                width: 100%;
                            }
                            .divTableRow {
                                display: table-row;
                            }
                            .divTableHeading {
                                display: table-header-group;
                            }
                            .divTableCell, .divTableHead {
                                display: table-cell;
                                padding-top: 3px;
                                padding-right: 20px;
                                padding-bottom: 3px;
                                padding-left: 0%;
                            }
                            .divTableHeading {
                                background-color: #EEE;
                                display: table-header-group;
                                font-weight: bold;
                            }
                            .divTableFoot {
                                background-color: #EEE;
                                display: table-footer-group;
                                font-weight: bold;
                            }
                            .divTableBody {
                                display: table-row-group;
                            }
                            .main_table{
                                display: table;
                                width: 100%;
                            }
                            .main_table th{
                                border:1px solid black;
                                padding: 10px
                            }
                            .main_table td{
                                padding-top: 3px;
                                padding-bottom: 3px;
                                padding-left: 8px;
                                padding-right: 8px;
                                padding-top: 8px;
                                border:1px solid black;
                            }
                            h2, h3{
                                color: #be1e2d;
                            }
                            .grafik{
                                position: absolute;
                                z-index: -1;
                                left: 0;
                                right: 0;
                                text-align: center;
                                margin-top: -100px;
                            }
                        </style>

                        <t t-call="equip3_hr_survey_extend.report_watermark"/>

                        <div t-if="doc.survey_type == 'IST'"><t t-call="equip3_hr_survey_extend.ist_test_result_template"/></div>
                        <div t-if="doc.survey_type == 'DISC'"><t t-call="equip3_hr_survey_extend.disc_test_result_template"/></div>
                        <div t-if="doc.survey_type == 'PAPIKOSTICK'"><t t-call="equip3_hr_survey_extend.papikostick_test_result_template"/></div>
                        <div t-if="doc.survey_type == 'EPPS'"><t t-call="equip3_hr_survey_extend.epps_test_result_template"/></div>
                        <div t-if="doc.survey_type == 'MBTI'"><t t-call="equip3_hr_survey_extend.mbti_test_result_template"/></div>
                        <div t-if="doc.survey_type == 'KRAEPELIN'"><t t-call="equip3_hr_survey_extend.kraepelin_test_result_template"/></div>
                        <div t-if="doc.survey_type == 'VAK'"><t t-call="equip3_hr_survey_extend.vak_test_result_template"/></div>
                    </div> 
                </t>
            </div>
        </t>
	</template>

    <record id="paperformat_recruitment_test_result" model="report.paperformat">
        <field name="name">Test Result Custom A4</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">40</field>
        <field name="margin_bottom">32</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">35</field>
        <field name="dpi">90</field>
    </record>

    <record id="equip3_hr_survey_extend.report_test_pdf" model="ir.actions.report">
        <field name="name">Report PDF</field>
        <field name="model">survey.user_input</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">equip3_hr_survey_extend.report_test_result</field>
        <field name="report_file">equip3_hr_survey_extend.report_test_result</field>
        <field name="attachment_use">1</field>
        <field name="binding_type">report</field>
        <field name="binding_model_id" eval="False"/>
        <field name="paperformat_id" ref="equip3_hr_survey_extend.paperformat_recruitment_test_result"/>
        <field name="print_report_name">'%s_%s' % (object.survey_id.title,object.applicant_name)</field>
    </record>

    <record id="survey.certification_report" model="ir.actions.report">
        <field name="binding_model_id" eval="False"/>
    </record>


	
</odoo>