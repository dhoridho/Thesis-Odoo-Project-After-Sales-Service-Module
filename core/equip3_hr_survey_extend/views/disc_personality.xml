<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="disc_personality_root_form_view" model="ir.ui.view">
            <field name="name">disc.personality.root.form</field>
            <field name="model">disc.personality.root</field>
            <field name="arch" type="xml">
                <form string="Disc Personality" create="0" delete="0">
                    <sheet>
                        <group>
                        <field name="sequence" required="1" readonly="1"/>
                        <field name="personality" required="1"/>
                        </group>
                        <group string="Personality Line">
                            <field name="personality_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="personality" string="Personality Line ID"/>
                                    <field name="personality_en" string="Personality Line EN"/>
                                </tree>

                            </field>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="disc_personality_root_tree_view" model="ir.ui.view">
            <field name="name">disc.personality.root.tree</field>
            <field name="model">disc.personality.root</field>
            <field name="arch" type="xml">
                <tree string="Disc Personality" create="0" delete="0">
                    <field name="sequence" widget="handle"/>
                    <field name="personality"/>
                </tree>
            </field>
        </record>

        <record id="disc_personality_root_search_view" model="ir.ui.view">
            <field name="name">disc.personality.root.search</field>
            <field name="model">disc.personality.root</field>
            <field name="arch" type="xml">
                <search string="Disc Personality">
                    <field name="personality" />
                    <field name="sequence" />
                </search>
            </field>
        </record>

        <record id="disc_personality_root_act_window" model="ir.actions.act_window">
            <field name="name">Disc Personality</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">disc.personality.root</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Disc Personality.
                </p>
            </field>
        </record>

        <!-- <menuitem name="Configuration" id="configuration_root_menu" parent="survey.menu_surveys" sequence="99" />
        <menuitem name="DISC" id="configuration_root_disc_menu" parent="configuration_root_menu" />
        <menuitem name="DISC Personality" id="configuration_disc_menu" parent="configuration_root_disc_menu"  action="disc_personality_root_act_window"/> -->

    </data>
</odoo>