<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="video_youtube_tree_views" model="ir.ui.view">
            <field name="name">video_youtube_tree_views</field>
            <field name="model">survey.user_input.line</field>
            <field name="priority">1000000</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="youtube_title" string="Title"/>
                    <field name="youtube_desc" string="Description"/>
                    <field name="youtube_visibility" string="Visibility"/>
                    <field name="youtube_durations"  string="Duration"/>
                    <field name="youtube_uploaded_date" string="Date"  widget="date"/>
                </tree>
            </field>
        </record>

        <record id="video_youtube_kanban_views" model="ir.ui.view">
            <field name="name">video_youtube_kanban_views</field>
            <field name="model">survey.user_input.line</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="question_id"/>
                    <field name="youtube_url"/>
                    <field name="youtube_title"/>
                    <field name="youtube_desc"/>
                    <field name="youtube_visibility"/>
                    <field name="youtube_durations"/>
                    <field name="youtube_uploaded_date"/>
                    <field name="user_input_id"/>
                    <field name="is_youtube_open_video"/>
                    

                    <templates>
  
                        <t t-name="kanban-box">
                            <div class="card oe_kanban_global_click p-0" >
                                <!--  <div class="o_squared_image">
                                    <iframe width="200" height="300" t-att-src="record.youtube_url.value"></iframe>
                                </div> -->
                                <br/>
                                <div class="row container">
                                    <div class="col-12">
                                        <h3>
                                            <field name="youtube_title"/>
             
                                        </h3>
                                    </div>
                                    <div class="col-12">
                                        <p style="margin:0px;">
                                            <field name="youtube_desc"/>
             
                                        </p>
                                    </div>
                                </div>
                                <br/>
                                <div class="row container" style="font-size: 8px;">
                                    <div class="col-6 text-center">
                                        <button name="youtube_popup_video_wizard_action" type="object" class="btn btn-primary" string="Open Video">Open Video</button>
                                    </div>
                                    <div class="col-6" style="padding: 0px;">
                                        <p style="margin:0px;">
                                            Uploaded Date : <field name="youtube_uploaded_date" widget="date"/>
             
                                        </p>
                                        <p style="margin:0px;">
                                            Visibility : <field name="youtube_visibility"/>
             
                                        </p>
                                        <p style="margin:0px;">
                                            Duration : <field name="youtube_durations"/> 
                                        </p>
                                    </div>
                                </div>
                                <br/>
                                <div class="row" style="font-size: 8px;">
                                    <div class="col-12 text-center">
                                         <t t-if="record.is_youtube_open_video.raw_value">
                                            <div class="o_squared_image">
                                                <iframe width="300" height="300" t-att-src="record.youtube_url.value+'?autoplay=1&amp;mute=1'"></iframe>
                                            </div>
                                        </t>
                                    </div>
                                </div>
                                        

                                <br/>
               
                                

                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <record id="video_youtube_act_view" model="ir.actions.act_window">
            <field name="name">Videos</field>
            <field name="res_model">survey.user_input.line</field>
            <field name="view_mode">kanban,tree</field>
            <field name="domain">[('youtube_url','!=',False)]</field>
            <field name="context">{'tree_view_ref':'equip3_hr_survey_extend.video_youtube_tree_views'}</field>
        </record>


        <record id="equip3_survey_extend_survey_question_form_inherit" model="ir.ui.view">
            <field name="name">equip3_survey_extend_survey_question.form</field>
            <field name="model">survey.question</field>
            <field name="inherit_id" ref="survey.survey_question_form"/>
            <field name="arch" type="xml">
                
                <xpath expr="//form/sheet/group[2]/group[2]/div/div[8]" position="attributes">
                    <attribute name="attrs">{'invisible': [('question_type', '!=', 'matrix'),('question_type','!=','disc')]}</attribute>
                </xpath>
                <!-- <xpath expr="//form/sheet/group[2]/group[1]/field[@name='question_type']" position="after">
                    <field name="code_ist" string="Code" attrs="{'invisible':[('parent.survey_type','!=','ist')],'required':[('parent.survey_type','=','ist')]}" />
                </xpath> -->

                  <xpath expr="//form/sheet/group[2]/group[2]/div/div[6]" position="attributes">
                    <attribute name="attrs">{'invisible': [('question_type', 'not in', ['simple_choice','epps','papikostick','mbti','vak'])]}</attribute>
                </xpath>

                <xpath expr="//form/sheet/group[2]/group[2]/div/div[8]" position="after">
                    <div attrs="{'invisible': [('question_type', '!=', 'ist')]}" role="img" aria-label="IST" title="IST">
                        <field name="ist_sub_type" widget="radio" />
                    </div>
                </xpath>

                <xpath expr="//form/sheet/notebook/page[@name='answers']/group[1]" position="attributes">
                    <attribute name="attrs">{'invisible': [('question_type', 'not in', ['matrix','disc','simple_choice','multiple_choice','epps','papikostick']), ('ist_sub_type', 'not in', ['simple_choice', 'char_box', 'numerical_box'])]}</attribute>
                </xpath>

                <xpath expr="//form/sheet/notebook/page[@name='answers']/group[2]" position="attributes">
                    <attribute name="attrs">{'invisible': [('question_type', 'not in', ['matrix','disc','simple_choice','multiple_choice','papikostick']), ('ist_sub_type', 'not in', ['simple_choice', 'char_box', 'numerical_box'])]}</attribute>
                </xpath>

                <xpath expr="//form/sheet/notebook/page[@name='answers']/group[2]/field[@name='matrix_row_ids']" position="attributes">
                    <attribute name="attrs">{'invisible': [('question_type', '!=', 'matrix'),('question_type','!=','disc')]}</attribute>
                </xpath>

                 <xpath expr="//form/sheet/notebook/page[@name='answers']/group[1]/field[@name='suggested_answer_ids']/tree/field[@name='value']" position="after">
                    <field name="code" attrs="{'column_invisible':[('parent.question_type','!=','epps')],'required':[('parent.question_type','=','epps')]}"/>
                    <field name="code_papikostick" string="Code" attrs="{'column_invisible':[('parent.question_type','!=','papikostick')],'required':[('parent.question_type','=','papikostick')]}"/>
                    <field name="mbti_code" string="Code" attrs="{'column_invisible':[('parent.question_type','!=','mbti')],'required':[('parent.question_type','=','mbti')]}"/>
                    <field name="vak_selection" string="VAK Selection" attrs="{'column_invisible':[('parent.question_type','!=','vak')],'required':[('parent.question_type','=','vak')]}"/>
                </xpath>

                <xpath expr="//form/sheet/notebook/page[@name='answers']/group[2]/field[@name='matrix_row_ids']/tree/field[@name='value']" position="after">
                    <field name="value_en" attrs="{'column_invisible':[('parent.question_type','!=','disc')]}" string="Rows EN"/>
                    <field name="code_m" attrs="{'column_invisible':[('parent.question_type','!=','disc')]}"/>
                    <field name="code_l"  attrs="{'column_invisible':[('parent.question_type','!=','disc')]}"/>
                </xpath>
                <xpath expr="//form/sheet/notebook/page[@name='answers']/group[2]/field[@name='matrix_row_ids']/tree/field[@name='value']" position="attributes">
                    <attribute name="string" >Rows ID</attribute>
                </xpath>
                 <xpath expr="//field[@name='question_type']" position="after">
                    <field name="is_read_only" invisible="1"/>
                </xpath>

                 <xpath expr="//field[@name='question_type']" position="attributes">
                    <attribute name="attrs">{'readonly': [('is_read_only', '=', True)]}</attribute>
                </xpath>

                 <xpath expr="//field[@name='question_type']" position="before">
                    <field name="is_interview"  invisible="1"
                    /> 
                    <field name="interview_category"  widget="radio" 
                    attrs="{'invisible':[('is_interview','=',False)]}" 
                    /> 
                    <field name="comment_parent_id"  
                    attrs="{'invisible':[('is_interview','=',False)]}"
                    domain="[('is_interview','=',True)]" 
                    /> 
                </xpath>
                <xpath expr="//form/sheet/notebook/page[@name='answers']/group[1]" position="before">
                    <group attrs="{'invisible': [('question_type', 'not in', ['video'])]}">
                        <style type="text/css">
                            .html_video .note-editor .note-editing-area .note-editable,
                            .html_video .note-editor .note-toolbar .note-style,
                            .html_video .note-editor .note-toolbar .note-fontsize,
                            .html_video .note-editor .note-toolbar .note-font,
                            .html_video .note-editor .note-toolbar .note-color,
                            .html_video .note-editor .note-toolbar .note-para,
                            .html_video .note-editor .note-toolbar .note-table,
                            .html_video .note-editor .note-toolbar .note-insert,
                            .html_video .note-editor .note-toolbar .note-history,
                            .html_video .note-editor .note-toolbar .note-view,
                            .html_video .note-editor .note-statusbar,
                            .html_video span.btn.btn-link.o_field_translate {
                                display: none;
                            }
                            
                            .o_content .html_video .note-editor .panel-heading.note-toolbar {
                                background: none !important;
                                border: none !important;
                            }
                            
                            .html_video .note-editor {
                                border: none;  
                                box-shadow: none !important;  
                            }

                            .html_video .note-editor .note-toolbar .note-video button.btn.btn-secondary.btn-sm{
                                background-color: #ED8E2A !important;
                                color: white !important;
                            }
                        </style>
                        <field name="video_type" widget="radio"/>
                        <!--<button  name="add_video_wizard_action" type="object" class="btn btn-primary video_game" attrs="{'invisible':[('video_type','!=','record')]}">Add a Video</button> -->
                        <!-- <label string="Add a Video" for="video_html" class="oe_inline"/> -->
                        <field name="video_html" widget="html" class="html_video" attrs="{'invisible':[('video_type','!=','record')]}"/>
                        <field name="youtube_url" attrs="{'invisible':[('video_type','!=','url')]}" />
                         <label string="Response Time" for="video_response_time" class="oe_inline"/>
                        <div>
                            <field name="video_response_time" attrs="{'required': [('question_type', 'in', ['video'])]}" class="oe_inline"/> 
                            <span class="oe_inline"> minutes</span>
                        </div>
                        <label string="Preparation Time" for="video_preparation_time" class="oe_inline"/>
                        <div>
                            <field name="video_preparation_time" attrs="{'required': [('question_type', 'in', ['video'])]}" class="oe_inline"/>
                            <span class="oe_inline"> minutes</span>
                        </div>
                        
                       
                        <field name="video_attempt_limit" attrs="{'required': [('question_type', 'in', ['video'])]}" string="Attempt Limit"/>
                    </group>

                    <!-- <group attrs="{'invisible': [('question_type', 'not in', ['kraepelin'])]}">
                        <label string="Number of Question" for="kraepelin_number_of_question" class="oe_inline"/>
                        <div>
                            <field name="kraepelin_number_of_question" attrs="{'required': [('question_type', 'in', ['kraepelin'])]}" class="oe_inline"/> 
                        </div>
                        <label string="Time (Seconds)" for="kraepelin_time" class="oe_inline"/>
                        <div>
                            <field name="kraepelin_time" attrs="{'required': [('question_type', 'in', ['kraepelin'])]}" class="oe_inline"/>
                        </div>
                        <field name="kraepelin_total_row" invisible="1" />
                        <field name="kraepelin_total_column" invisible="1" />
                        <field name="kraepelin_time_per_row" invisible="1" />
                    </group> -->


                    <group attrs="{'invisible': [('question_type', '!=', 'file')]}">
                        <label for="pdf" string="File Type" />
                        <div attrs="{'invisible': [('question_type', '!=', 'file')]}">
                            <style type="text/css">
                                td {
                                width: 80px
                                }
                            </style>
                            <table>
                                <tr>
                                    <td>
                                        <field name="pdf" type="checkbox" class="oe_inline"/>
                                        <b class="oe_inline">.pdf</b>
                                    </td>
                                    <td>
                                        <field name="xls" type="checkbox" class="oe_inline"/>
                                        <b class="oe_inline">.xls</b>
                                    </td>
                                    <td>
                                        <field name="rar" type="checkbox" class="oe_inline"/>
                                        <b class="oe_inline">.rar</b>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <field name="doc" type="checkbox" class="oe_inline"/>
                                        <b class="oe_inline">.doc</b>
                                    </td>
                                    <td>
                                        <field name="xlsx" type="checkbox" class="oe_inline"/>
                                        <b class="oe_inline">.xlsx</b>
                                    </td>
                                    <td><field name="mp4" type="checkbox" class="oe_inline"/>
                                        <b class="oe_inline">.Mp4</b></td>
                                </tr>
                                <tr>
                                    <td>
                                        <field name="docx" type="checkbox" class="oe_inline"/>
                                        <b class="oe_inline">.docx</b>
                                    </td>
                                    <td>
                                        <field name="jpg" type="checkbox" class="oe_inline"/>
                                        <b class="oe_inline">.jpg</b>
                                    </td>
                                    <td/>
                                </tr>
                                <tr>
                                    <td>
                                        <field name="zip" type="checkbox" class="oe_inline"/>
                                        <b class="oe_inline">.zip</b>
                                    </td>
                                    <td>
                                        <field name="png" type="checkbox" class="oe_inline"/>
                                        <b class="oe_inline">.png</b>
                                    </td>
                                    <td/>
                                </tr>
                            </table>
                        </div>
                        <label for="file_size" />
                        <div >
                            <field name="file_size" class="oe_inline"/>
                            <b class="oe_inline" style="padding: 5px">MB</b>
                        </div>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>