<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="survey_epps_matrix_form_view" model="ir.ui.view">
            <field name="name">survey.epps.scoring.matrix.form</field>
            <field name="model">survey.epps.scoring.matrix</field>
            <field name="arch" type="xml">
                <form string="EPPS Scoring Matrix" create="0" delete="0">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" required="1"/>
                            </h1>
                        </div>
                        <group name="epps_group" >
                            
                            <field name="code" />
                        </group>
                        <notebook>
                            <page name="matrix_line" string="Matrix Line">
                                <field name="scoring_matrix_line_ids" >
                                    <tree editable="bottom" >
                                        <field name="score"/>
                                        <field name="achievement" string="ach" />
                                        <field name="deference" string="def"/>
                                        <field name="order" string="ord"/>
                                        <field name="exhibition" string="exh"/>
                                        <field name="autonomy" string="aut"/>
                                        <field name="affiliation" string="aff" />
                                        <field name="intraception" string="int"/>
                                        <field name="succorance" string="suc" />
                                        <field name="dominance" string="dom"/>
                                        <field name="abasement" string="aba"/>
                                        <field name="nurturance" string="nur"/>
                                        <field name="change" string="chg"/>
                                        <field name="endurance" string="end"/>
                                        <field name="heterosextuality" string="het"/>
                                        <field name="aggression" string="agg"/>
                                        <field name="consistency" string="con"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                       
                    </sheet>
                </form>
            </field>
        </record>

        <record id="survey_epps_scoring_matrix_tree_view" model="ir.ui.view">
            <field name="name">survey.epps.scoring.matrix.tree</field>
            <field name="model">survey.epps.scoring.matrix</field>
            <field name="arch" type="xml">
                <tree string="EPPS Scoring Matrix" create="0" delete="0">
                    <field name="code"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="survey_epps_scoring_matrix_search_view" model="ir.ui.view">
            <field name="name">survey.epps.scoring.matrix.search</field>
            <field name="model">survey.epps.scoring.matrix</field>
            <field name="arch" type="xml">
                <search string="EPPS Scoring Matrix">
                   <field name="code"/>
                   <field name="name"/>
                </search>
            </field>
        </record>

        <record id="survey_epps_scoring_matrix_act_window" model="ir.actions.act_window">
            <field name="name">EPPS Scoring Matrix</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">survey.epps.scoring.matrix</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new EPPS Scoring Matrix.
                </p>
            </field>
        </record>
        <!-- <menuitem name="EPPS" id="configuration_root_epps_menu" parent="configuration_root_menu" />
        <menuitem name="EPPS Scoring Matrix" id="epps_scoring_matrix_menu" parent="configuration_root_epps_menu" action="survey_epps_scoring_matrix_act_window" sequence="0"/> -->

    </data>
</odoo>