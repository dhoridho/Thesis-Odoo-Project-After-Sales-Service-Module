<?xml version="1.0" encoding="UTF-8"?>

<odoo>


   <!-- Form View -->
    <record id="youtube_res_config_settings_form_view" model="ir.ui.view">
        <field name="name">youtube_res_config_settings_form_view</field>
        <field name="model">res.config.settings</field>
        <field name="priority">99999</field>
        <field name="arch" type="xml">
            <form string="Survey Question" create="false">
                <sheet>
                <widget name="web_ribbon" title="Valid"
                                attrs="{'invisible': [('is_valid_youtube', '!=', True)]}"/>
                    <group string="Youtube Connector">
                        <field name="client_config" required="1" attrs="{'invisible': [('is_valid_youtube', '=', True)]}"/>
                        <field name="email_login" readonly="1" forcesave="1"/>
                        <field name="is_valid_youtube" invisible="1"/>
                        <field name="user_name" readonly="1" forcesave="1"/>  
                    </group>
                    <a href="\equip3_hr_survey_extend\static\src\html\Tutorial Create Youtube API ID and Secret.html" target='_blank' class="oe_link" style="margin-left: 150px">
                        <i class="fa fa-fw fa-arrow-right"></i>
                        Tutorial
                    </a>
                    <group>
                        <button type="object" name="youtube_test_connection" string="Connect" class="oe_highlight" attrs="{'invisible': [('is_valid_youtube', '=', True)]}"/>

                        <!-- <a href="\equip3_hr_survey_extend\static\src\html\Tutorial Create Youtube API ID and Secret.html" target='_blank'>
                            <i class name="action_none"  string="Tutorial" type="object" class="oe_highlight" />
                        </a> -->
                    </group>
                    <group>
                        <button type="object" name="logout_google" string="Logout"  attrs="{'invisible': [('is_valid_youtube', '!=', True)]}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="youtube_res_config_auth_form_view" model="ir.ui.view">
            <field name="name">youtube_res_config_auth_form_view</field>
            <field name="model">res.config.settings</field>
            <field name="priority">99999</field>
            <field name="arch" type="xml">
                <form>
                    <sheet class="text-center">
                        <div class="text-center">

                            <field name="youtube_go_google" widget="url" readonly="1" nolabel="1" text="Redirect To Google" class="btn btn-primary" style="text-align: center; padding: 10px 0; font-size: 20px;text-decoration: unset !important; width: 50% !important; min-width: unset !important; border-radius: 12px;"/>
                        </div>
                        <group>
                             <field name="company_id" invisible="1"/>
                        </group>

                        <footer>
                            <p style="margin:unset;">*Note : </p>
                        <p >Please click the button above first to get access from google.</p>
              
                            <button string="Close" class="oe_highlight" special="cancel" />
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

    <record id="youtube_res_config_success_form_view" model="ir.ui.view">
        <field name="name">youtube_res_config_success_form_view</field>
        <field name="model">res.config.settings</field>
        <field name="priority">99999</field>
        <field name="arch" type="xml">
            <form >
                <br/><br/>
                <p style="margin-bottom: unset;">
                Test Connection Succes
                </p>
                <footer>
                    <button string="Close" special="cancel" type="button" class="oe_highlight"/>
                </footer>

            </form>
        </field>
    </record>
    

    <record id="youtube_res_config_settings_act" model="ir.actions.act_window">
        <field name="name">Youtube Connector</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'form_view_ref':'equip3_hr_survey_extend.youtube_res_config_settings_form_view'}</field>
    </record>
    

</odoo>
