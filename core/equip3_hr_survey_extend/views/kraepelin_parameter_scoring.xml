<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="kraepelin_parameter_scoring_form_view" model="ir.ui.view">
            <field name="name">kraepelin.parameter.scoring.form</field>
            <field name="model">kraepelin.parameter.scoring</field>
            <field name="arch" type="xml">
                <form string="Kraepelin Parameter Descriptions" create="0" delete="1">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" string="Code" required="1"/>
                            </h1>
                        </div>
                        <notebook name="panker_line">
                            <page name="panker_line" string="Panker">
                                <field name="krapelin_panker_scoring_line_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="description"/>
                                        <field name="score_from" string="Score From (%)" readonly="1"/>
                                        <field name="score_to" string="Score To (%)" readonly="1"/>
                                    </tree>
                                </field>
                            </page>

                            <page name="tianker_line" string="Tianker">
                                <field name="krapelin_tianker_scoring_line_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="description"/>
                                        <field name="score_from" string="Score From (%)" readonly="1"/>
                                        <field name="score_to" string="Score To (%)" readonly="1"/>
                                    </tree>
                                </field>
                            </page>

                            <page name="janker_line" string="Janker">
                                <field name="krapelin_janker_scoring_line_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="description"/>
                                        <field name="score_from" string="Score From (%)" readonly="1"/>
                                        <field name="score_to" string="Score To (%)" readonly="1"/>
                                    </tree>
                                </field>
                            </page>

                            <page name="hanker_line" string="Hanker">
                                <field name="krapelin_hanker_scoring_line_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="description"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="kraepelin_parameter_scoring_tree_view" model="ir.ui.view">
            <field name="name">kraepelin.parameter.scoring.tree</field>
            <field name="model">kraepelin.parameter.scoring</field>
            <field name="arch" type="xml">
                <tree string="Parameter Scoring" create="0" delete="0">
                    <field name="sequence" widget="handle"/>
                    <field name="name" required="1" string="Code"/>
                </tree>
            </field>
        </record>

        <record id="kraepelin_parameter_scoring_act_window" model="ir.actions.act_window">
            <field name="name">Kraepelin Parameter Scoring</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kraepelin.parameter.scoring</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new MBTI Parameter.
                </p>
            </field>
        </record>

    </data>
</odoo>