<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="mbti_parameter_root_form_view" model="ir.ui.view">
            <field name="name">mbti.parameter.root.form</field>
            <field name="model">mbti.parameter.root</field>
            <field name="arch" type="xml">
                <form string="MBTI Parameter" create="0" delete="1">
                    <sheet>
                        <group>
                            <group>
                                <field name="sequence" required="1" readonly="1" invisible="1"/>
                                <field name="name" required="1" readonly="1"/>
                                <field name="description"/>
                                <field name="advice_and_self_development"/>
                                <field name="suitable_profession"/>
                                <field name="famous_figure"/>
                                <field name="frequency_in_population" invisible="1" />
                                <field name="job_position" widget="many2many_tags" />
                            </group>
                            <group>
                                <div style="text-align: center;">
                                    <field name="representation" widget="image" nolabel="1"/>
                                </div>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="mbti_parameter_root_tree_view" model="ir.ui.view">
            <field name="name">mbti.parameter.root.tree</field>
            <field name="model">mbti.parameter.root</field>
            <field name="arch" type="xml">
                <tree string="Parameter Line" create="0" delete="0">
                    <field name="sequence" widget="handle"/>
                    <field name="name" required="1"/>
                    <field name="description"/>
                    <field name="advice_and_self_development"/>
                    <field name="suitable_profession"/>
                    <field name="famous_figure"/>
                    <field name="frequency_in_population" invisible="1" />
                </tree>
            </field>
        </record>

        <record id="mbti_parameter_root_act_window" model="ir.actions.act_window">
            <field name="name">MBTI Parameter</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mbti.parameter.root</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new MBTI Parameter.
                </p>
            </field>
        </record>

    </data>
</odoo>