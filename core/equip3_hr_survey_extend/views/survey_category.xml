<odoo>
<data>

    <record id="survey_category_form_view" model="ir.ui.view">
        <field name="name">Survey Category</field>
        <field name="model">survey.category</field>
        <field name="arch" type="xml">
            <form string="Manpower Planning">
                <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="create_uid"/>
                                <field name="create_date"/>
                            </group>

                        </group>

                        
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>

        </field>
    </record>

    <record id="survey_category_filter" model="ir.ui.view">
        <field name="name">survey.category.search</field>
        <field name="model">survey.category</field>
        <field name="arch" type="xml">
            <search string="Search Manpower Planning">
               <field name="name" />
           </search>
        </field>
    </record>

 <record id="survey_category_tree_view" model="ir.ui.view">
        <field name="name">Survey Category</field>
        <field name="model">survey.category</field>
        <field name="arch" type="xml">
            <tree string="Survey Category">
                <field name="name"/>
            </tree>
        </field>
    </record>

    

    
 <record id="survey_category_action" model="ir.actions.act_window">
        <field name="name">Survey Category</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">survey.category</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
              Create a new Survey Category
            </p>
        </field>
    </record>

   


</data>


</odoo>