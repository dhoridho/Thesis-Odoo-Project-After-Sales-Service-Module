<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	
	<record model="ir.ui.view" id="search_survey_psycological_test_inherit">
		<field name="name">survey.survey.psycological.test.inherit.search</field>
		<field name="model">survey.survey</field>
		<field name="inherit_id" ref="survey.survey_survey_view_search"/>
		<field name="arch" type="xml">
			<xpath expr="//group" position="inside">
				<filter string="Category" name="by_category" context="{'group_by': 'category_id'}"/>
			</xpath>
		</field>
      </record>

    <!--action of the psychological_test -->
    <record id="psychological_test_action" model="ir.actions.act_window">
    	<field name="name">Psychological Test</field>
    	<field name="res_model">survey.survey</field>
		<field name="view_ids" eval="[(5, 0, 0),
		(0, 0, {'view_mode': 'tree'}),
		(0, 0, {'view_mode': 'kanban'}),
    	(0, 0, {'view_mode': 'form'})]"/>
		<field name="search_view_id" ref="equip3_hr_survey_extend.search_survey_psycological_test_inherit"/>
    	<field name="domain">
    		['|', ('survey_type','in', ['disc','epps', 'papikostick','ist','mbti','vak']),
			('category_id.name', '=', 'Aptitude')]
    	</field>
		<field name="context">
    		{'default_survey_type':"disc", 'search_default_by_category': 1}
    	</field>
    </record>


    

    

    <!-- <menuitem id="psychological_test" name="Psychological Test" parent="survey.menu_surveys" sequence="2" action="psychological_test_action" /> -->


</odoo>
