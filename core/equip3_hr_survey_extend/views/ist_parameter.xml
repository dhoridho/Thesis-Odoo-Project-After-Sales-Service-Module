<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="ist_parameter_root_form_view" model="ir.ui.view">
            <field name="name">ist.parameter.root.form</field>
            <field name="model">ist.parameter.root</field>
            <field name="arch" type="xml">
                <form string="IST Parameter" create="0" delete="0">
                    <sheet>
                        <group>
                            <field name="sequence" required="1" readonly="1"/>
                            <field name="parameter" required="1"/>
                            <field name="code" string="Code"/>
                            <field name="description" string="Description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="ist_parameter_root_tree_view" model="ir.ui.view">
            <field name="name">ist.parameter.root.tree</field>
            <field name="model">ist.parameter.root</field>
            <field name="arch" type="xml">
                <tree string="Parameter Line" create="0" delete="0">
                    <field name="sequence" widget="handle"/>
                    <field name="parameter"/>
                    <field name="code" string="Code"/>
                    <field name="description" string="Description"/>
                </tree>
            </field>
        </record>

        <record id="ist_parameter_root_act_window" model="ir.actions.act_window">
            <field name="name">IST Parameter</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ist.parameter.root</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Disc Personality.
                </p>
            </field>
        </record>

    </data>
</odoo>