<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="mbti_variable_form_view" model="ir.ui.view">
            <field name="name">mbti.variable.form</field>
            <field name="model">mbti.variable</field>
            <field name="arch" type="xml">
                <form string="MBTI Parameter" create="0" delete="1">
                    <sheet>
                        <group>
                            <field name="sequence" required="1" readonly="1" invisible="1"/>
                            <field name="name" required="1" readonly="1"/>
                            <field name="code" required="1" readonly="1"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="mbti_variable_tree_view" model="ir.ui.view">
            <field name="name">mbti.variable.tree</field>
            <field name="model">mbti.variable</field>
            <field name="arch" type="xml">
                <tree string="MBTI Variable" create="0" delete="0">
                    <field name="sequence" widget="handle"/>
                    <field name="name" required="1"/>
                    <field name="code" required="1"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="mbti_variable_act_window" model="ir.actions.act_window">
            <field name="name">MBTI Variabke</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mbti.variable</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new MBTI Parameter.
                </p>
            </field>
        </record>

    </data>
</odoo>