<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="ist_scoring_gesamt_form_view" model="ir.ui.view">
            <field name="name">ist.scoring.gesamt.form</field>
            <field name="model">ist.scoring.gesamt</field>
            <field name="arch" type="xml">
                <form string="IST Scoring Gesamt" create="0" delete="0">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" required="1"/>
                            </h1>
                        </div>
                        <group>
                            <field name="age_from"/>
                            <field name="age_to"/>
                        </group>
                        <notebook name="line_ids">
                            <page name="gesamt_line" string="Gesamt Line">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="row_score"/>
                                        <field name="score"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="ist_scoring_gesamt_tree_view" model="ir.ui.view">
            <field name="name">ist.scoring.gesamt.tree</field>
            <field name="model">ist.scoring.gesamt</field>
            <field name="arch" type="xml">
                <tree string="IST Scoring Gesamt" create="0" delete="0">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="ist_scoring_gesamt_act_window" model="ir.actions.act_window">
            <field name="name">IST Scoring Gesamt</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ist.scoring.gesamt</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Gesamt.
                </p>
            </field>
        </record>

    </data>
</odoo>