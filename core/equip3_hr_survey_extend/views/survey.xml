    <record id='survey_survey_action' model='ir.actions.act_window'>
        <field name="name">Survey</field>
        <field name="res_model">survey.survey</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{ 'default_survey_type': '' }</field>
    </record>

    <menuitem name="Surveys"
                  id="survey.menu_surveys"
                  sequence="70"
              groups="make_invisible"
                  web_icon="survey,static/description/icon.png"/>
    <menuitem id="survey_root" name="Survey" sequence="3"/>
    <menuitem id='survey_survey' name='Survey' parent="survey_root" action="survey_survey_action" sequence='1' />
