<odoo>

    <data>

        <template id="question_file" name="Question: File">
            <div 
                 t-att-id="question.id"
                 t-att-data-constr-error-msg="'This question requires an answer'"
                 t-att-data-validation-error-msg="'The answer you entered is not valid.'">
                <div class="row s_col_no_resize s_col_no_bgcolor">
                
                    <div class="col-sm">
                        <input type="file"
                               class="form-control s_website_form_input"
                               t-att-id="question.id"
                               t-att-name="question.id"
                               data-question-type="file"
                                t-att-data-max-file="question.file_size"
                                t-att-data-pdf-file="question.pdf"
                                t-att-data-xls-file="question.xls"
                                t-att-data-rar-file="question.rar"
                                t-att-data-doc-file="question.doc"
                                t-att-data-xlsx-file="question.xlsx"
                                t-att-data-docx-file="question.docx"
                                t-att-data-jpg-file="question.jpg"
                                t-att-data-zip-file="question.zip"
                                t-att-data-png-file="question.png"
                                t-att-data-mp4-file="question.mp4"
                               
                               />
                    
                    </div>
                </div>
                </div>
            </template>

                

        

        
    
    </data>
    


</odoo>