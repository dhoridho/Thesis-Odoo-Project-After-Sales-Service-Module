<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="kraepelin_janker_parameter_form_view" model="ir.ui.view">
            <field name="name">kraepelin.janker.parameter.form</field>
            <field name="model">kraepelin.janker.parameter</field>
            <field name="arch" type="xml">
                <form string="Kraepelin Janker Parameter" create="0" delete="1">
                    <sheet>
                        <group name="janker_parameter" string="Janker Parameter">
                            <field name="name" />
                            <field name="description" />
                            <field name="score_from" string="Score From (%)" readonly="1" />
                            <field name="score_to" string="Score To (%)" readonly="1" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="kraepelin_janker_parameter_tree_view" model="ir.ui.view">
            <field name="name">kraepelin.janker.parameter.tree</field>
            <field name="model">kraepelin.janker.parameter</field>
            <field name="arch" type="xml">
                <tree string="Janker Parameter" create="0" delete="0">
                    <field name="name" />
                    <field name="description" />
                    <field name="score_from" string="Score From (%)" />
                    <field name="score_to" string="Score To (%)" />
                </tree>
            </field>
        </record>

        <record id="kraepelin_janker_parameter_act_window" model="ir.actions.act_window">
            <field name="name">Kraepelin Janker Parameter</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kraepelin.janker.parameter</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Janker Parameter.
                </p>
            </field>
        </record>

    </data>
</odoo>