<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="ist_scoring_matrix_form_view" model="ir.ui.view">
            <field name="name">ist.scoring.matrix.form</field>
            <field name="model">ist.scoring.matrix</field>
            <field name="arch" type="xml">
                <form string="IST Scoring Matrix" create="0" delete="1">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="age" required="1"/>
                            </h1>
                        </div>
                        <group>
                            <field name="code" string="Code"/>
                            <field name="age_from"/>
                            <field name="age_to"/>
                        </group>
                        <notebook name="ist_scoring_matrix_line">
                            <page name="matrix_line" string="Matrix Line">
                                <field name="ist_age_line_ids">
                                    <tree editable="bottom">
                                        <field name="score"/>
                                        <field name="satzerganzng" string="SE"/>
                                        <field name="worthausuahi" string="WA"/>
                                        <field name="analogien" string="AN"/>
                                        <field name="gmeisamkeiten" string="GE"/>
                                        <field name="rachen_aufgaben" string="RA"/>
                                        <field name="zahlen_reihen" string="ZR"/>
                                        <field name="form_ausuahi" string="FA"/>
                                        <field name="wurfal_augaben" string="WU"/>
                                        <field name="merk_aufgaben" string="ME"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="ist_scoring_matrix_tree_view" model="ir.ui.view">
            <field name="name">ist.scoring.matrix.tree</field>
            <field name="model">ist.scoring.matrix</field>
            <field name="arch" type="xml">
                <tree string="IST Scoring Matrix" create="0" delete="1">
                    <field name="code" string="Code"/>
                    <field name="age" string="Age"/>
                </tree>
            </field>
        </record>

        <record id="ist_scoring_matrix_act_window" model="ir.actions.act_window">
            <field name="name">IST Scoring Matrix</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ist.scoring.matrix</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Disc Personality.
                </p>
            </field>
        </record>

    </data>
</odoo>