<?xml version ="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_views_forms" model="ir.ui.view">
        <field name="name">res.config.settings.inherit.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="equip3_general_setting.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='implementor_sales']" position="after">
                <div class="col-xs-12 o_setting_box" attrs="{'invisible': [('sales', '=', False)]}">
                    <div class="o_setting_left_pane">
                        <field name="is_over_limit_validation"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="is_over_limit_validation"/>
                        <div class="text-muted">
                            Set On/Off over limit validation in Quotation
                        </div>
                    </div>
                </div>                
                <div class="row mt16 o_settings_container">
                    <div class="o_setting_box" attrs="{'invisible': [('sales', '=', False)]}">
                        <div class="o_setting_left_pane">
                            <field name="is_customer_approval_matrix" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_customer_approval_matrix"/>
                            <div class="text-muted">
                                Set On/Off Sale Order Approval Matrix
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_customer_limit_matrix" invisible="1"/>
                        </div>
                    </div>
                </div>
            </xpath>
			<xpath expr="//field[@name='is_customer_limit_matrix']/../../../.." position="after">
				<div class="row mt16 o_settings_container" attrs="{'invisible': [('sales', '=', False)]}">
					<div class="row mt16 o_settings_container" id="approval_matrix">
						<div class="o_setting_box" attrs="{'invisible': [('sales', '=', False)]}">
							<div class="o_setting_left_pane">
								<field name="is_bo_approval_matrix"/>
							</div>
							<div class="o_setting_right_pane">
								<label for="is_bo_approval_matrix"/>
								<div class="text-muted">
									Set On/Off Blanket Order approval matrix
								</div>
							</div>
						</div>
					</div>
				</div>
                <div class="row mt16 o_settings_container">
                    <div class="row mt16 o_settings_container" id="pricelist_approval_matrix">
                        <div class="o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="group_sale_pricelist_approval"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="group_sale_pricelist_approval"/>
                                <div class="text-muted">
                                    Set On/Off Pricelist Approval Matrix
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
			</xpath>
        </field>
    </record>

    <record id="sh_sale_barcode_mobile_res_config_settings_form_inherit" model="ir.ui.view">
        <field name="name">sh.sale.barcode.mobile.res.config.settings.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sh_all_in_one_mbs.sh_sale_barcode_mobile_res_config_settings_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='div_sh_sale_bm_is_notify_on_success']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@id='sale_barcode_mobile']" position="before">
                <div class="col-12 col-lg-6 o_setting_box" invisible="0">
                    <div class="o_setting_left_pane">
                        <field name="show_sale_barcode_mobile_type" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="show_sale_barcode_mobile_type" />
                        <label style="padding-top:10px" for="sh_sale_barcode_mobile_type_new" attrs="{'invisible': [('show_sale_barcode_mobile_type', '=', False)]}"/>
                        <div class="content-group" attrs="{'invisible': [('show_sale_barcode_mobile_type', '=', False)]}">
                            <div class="mt16">
                                <field name="sh_sale_barcode_mobile_type_new" class="o_light_label" widget="radio" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box" id="div_sh_sale_bm_is_notify_on_success">
                    <div class="o_setting_left_pane">
                        <field name="sh_sale_bm_is_notify_on_success" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="sh_sale_bm_is_notify_on_success" />
                        <div class="text-muted">
                            Notification on Succeed
                        </div>
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[@id='sale_barcode_mobile']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>
