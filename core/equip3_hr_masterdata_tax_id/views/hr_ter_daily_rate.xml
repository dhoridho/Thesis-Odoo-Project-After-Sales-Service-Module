<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="pph21_ter_daily_rate_view_form" model="ir.ui.view">
            <field name="name">hr.ter.daily.rate.form</field>
            <field name="model">hr.ter.daily.rate</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="daily_bruto_income_from" required="1"/>
                                <field name="daily_bruto_income_to" required="1"/>
                                <field name="daily_rate" required="1"/>
                                <field name="create_date" />
                                <field name="create_uid" />
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="pph21_ter_daily_rate_tree_view" model="ir.ui.view">
            <field name="name">hr.ter.daily.rate.tree</field>
            <field name="model">hr.ter.daily.rate</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="daily_bruto_income_from"/>
                    <field name="daily_bruto_income_to"/>
                    <field name="daily_rate"/>
                </tree>
            </field>
        </record>

        <record id="pph21_ter_daily_rate_action" model="ir.actions.act_window">
            <field name="name">PPH21 TER Daily Rate</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.ter.daily.rate</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new PPH21 TER Daily Rate.
                </p>
            </field>
        </record>

        <menuitem name="PPH21 TER Daily Rate" id="pph21_ter_daily_rate_menu" parent="hashmicro_tax_master_data_root" action="pph21_ter_daily_rate_action"/>

    </data>
</odoo>