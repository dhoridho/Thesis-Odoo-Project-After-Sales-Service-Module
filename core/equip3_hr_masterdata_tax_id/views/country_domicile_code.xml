<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_country_tree" model="ir.ui.view">
            <field name="name">country.domicile.code.tree</field>
            <field name="model">country.domicile.code</field>
            <field name="arch" type="xml">
                <tree string="Country Domicile Code">
                    <field name="name"/>
                    <field name="country_id"/>
                </tree>
            </field>
        </record>

        <record id="view_country_domicile_code_form" model="ir.ui.view">
            <field name="name">country.domicile.code.form</field>
            <field name="model">country.domicile.code</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="country_id" options='{"no_open": True, "no_create": True}'/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_country_domicile_code" model="ir.actions.act_window">
            <field name="name">Country Domicile Code</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">country.domicile.code</field>
            <field name="help">Display and manage the list of Country Domicile Code.</field>
        </record>

        <menuitem id="menu_country_domicile_code" name="Country Domicile Code"  parent="hr_payroll_community.menu_hr_payroll_community_configuration"
                  action="action_country_domicile_code" sequence="100"/>

    </data>
</odoo>
