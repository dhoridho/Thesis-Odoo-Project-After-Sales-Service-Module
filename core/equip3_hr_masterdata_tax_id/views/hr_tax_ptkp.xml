<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_tax_ptkp_form_view" model="ir.ui.view">
            <field name="name">hr.tax.ptkp.form</field>
            <field name="model">hr.tax.ptkp</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="ptkp_name"/>
                                <field name="ptkp_amount"/>
                                <field name="company_id" readonly="1" groups="base.group_multi_company"/>
                                <!-- <field name="branch_id"/> -->
                                <field name="create_date" string="Created On"/>
                                <field name="create_uid" string="Created By"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_tax_ptkp_tree_view" model="ir.ui.view">
            <field name="name">hr.tax.ptkp.tree</field>
            <field name="model">hr.tax.ptkp</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ptkp_name"/>
                    <field name="ptkp_amount"/>

                </tree>
            </field>
        </record>

        <record id="hr_tax_ptkp_search_view" model="ir.ui.view">
            <field name="name">hr.tax.ptkp.search</field>
            <field name="model">hr.tax.ptkp</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ptkp_name"/>
                </search>
            </field>
        </record>

        <record id="hr_tax_ptkp_act_window" model="ir.actions.act_window">
            <field name="name">PTKP</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.tax.ptkp</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no PTKP data
                </p>
            </field>
        </record>

        <menuitem name="PTKP" id="ptkp_menu" parent="hashmicro_tax_master_data_root" action="hr_tax_ptkp_act_window"/>

    </data>
</odoo>