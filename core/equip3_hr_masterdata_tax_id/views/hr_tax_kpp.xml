<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_tax_kpp_form_view" model="ir.ui.view">
            <field name="name">hr.tax.kpp.form</field>
            <field name="model">hr.tax.kpp</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="name"/>
                                <field name="address"/>
                                <field name="phone"/>
                                <field name="fax"/>
                                <field name="company_id" readonly="1" groups="base.group_multi_company"/>
                                <!-- <field name="branch_id"/> -->
                                <field name="create_date" string="Created On"/>
                                <field name="create_uid" string="Created By"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_tax_kpp_tree_view" model="ir.ui.view">
            <field name="name">hr.tax.kpp.tree</field>
            <field name="model">hr.tax.kpp</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="address"/>
                    <field name="phone"/>
                    <field name="fax"/>
                </tree>
            </field>
        </record>

        <record id="hr_tax_search_view" model="ir.ui.view">
            <field name="name">hr.tax.kpp.search</field>
            <field name="model">hr.tax.kpp</field>
            <field name="arch" type="xml">
                <search>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="address"/>
                    <field name="phone"/>
                    <field name="fax"/>

                </search>
            </field>
        </record>

        <record id="hr_tax_act_window" model="ir.actions.act_window">
            <field name="name">KPP</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.tax.kpp</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no KPP data
                </p>
            </field>
        </record>

<!--        <menuitem name="Tax" id="tax_root_menu" parent="hashmicro_tax_master_data_root"/>-->
        <menuitem name="KPP" id="kpp_menu" parent="hashmicro_tax_master_data_root" action="hr_tax_act_window"/>

    </data>
</odoo>