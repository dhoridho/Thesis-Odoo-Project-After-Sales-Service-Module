<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.cron" id="ptkp_change_status">
            <field name="name">PTKP Change Status</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="model_hr_ptkp_change_status"/>
            <field name="nextcall" eval="datetime.now() + (datetime.now(pytz.timezone('Asia/Jakarta')).replace(hour=3, minute=00, second=00) - datetime.now(pytz.timezone('Asia/Jakarta'))) % timedelta(hours=24)"/>
            <field name="state">code</field>
            <field name="code">model.change_ptkp_status()</field>
        </record>

        <record id="hr_ptkp_change_status_form_view" model="ir.ui.view">
            <field name="name">hr.ptkp.change.status.form</field>
            <field name="model">hr.ptkp.change.status</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_draft" string="Set to Draft"  attrs="{'invisible':[('state','=','draft')]}" type="object" class="oe_highlight"/>
                        <button name="action_confirm" string="Confirm"  attrs="{'invisible':[('state','!=','draft')]}" type="object" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,updated" />
                    </header>
                    <sheet>
                        <group>
                            <label style="min-width: 250px;" for="hr_years" string="HR Years"/>
                            <div>
                                <span>
                                    <field name="hr_years" attrs="{'readonly':[('state','!=','draft')]}" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                </span>
                            </div>
                            <field name="employee_id" attrs="{'readonly':[('state','!=','draft')]}" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                            <field name="sequence_code" force_save="1"/>
                            <field name="department_id" force_save="1"/>
                            <field name="job_id" force_save="1"/>
                            <field name="ptkp_id" force_save="1"/>
                            <field name="new_ptkp_id" attrs="{'readonly':[('state','!=','draft')]}" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_ptkp_change_status_tree_view" model="ir.ui.view">
            <field name="name">hr.ptkp.change.status.tree</field>
            <field name="model">hr.ptkp.change.status</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="hr_years"/>
                    <field name="employee_id"/>
                    <field name="sequence_code"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="ptkp_id"/>
                    <field name="new_ptkp_id"/>
                    <field name="state" decoration-primary="state == 'draft'"
                            decoration-success="state == 'confirmed'"
                            decoration-success2="state == 'updated'" 
                            widget='badge'/>
                </tree>
            </field>
        </record>

        <record id="hr_ptkp_change_status_search_view" model="ir.ui.view">
            <field name="name">hr.ptkp.change.status.search</field>
            <field name="model">hr.ptkp.change.status</field>
            <field name="arch" type="xml">
                <search>
                    <field name="hr_years"/>
                    <field name="employee_id"/>
                    <field name="sequence_code"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                </search>
            </field>
        </record>

        <record id="hr_ptkp_change_status_act_window" model="ir.actions.act_window">
            <field name="name">PTKP Change Status</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.ptkp.change.status</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no data
                </p>
            </field>
        </record>

        <menuitem name="PTKP Change Status" id="hr_ptkp_change_status_menu" parent="hr.menu_hr_root" action="hr_ptkp_change_status_act_window"/>

    </data>
</odoo>