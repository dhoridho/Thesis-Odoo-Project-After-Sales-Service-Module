<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="pph21_ter_categories_view_form" model="ir.ui.view">
            <field name="name">hr.ter.category.form</field>
            <field name="model">hr.ter.category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="category" required="1"/>
                                <field name="ptkp_ids" widget="many2many_tags" required="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                                <field name="bruto_income_from" required="1"/>
                                <field name="bruto_income_to" required="1"/>
                                <field name="ter_rate" required="1"/>
                                <field name="create_date" />
                                <field name="create_uid" />
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="pph21_ter_categories_tree_view" model="ir.ui.view">
            <field name="name">hr.ter.category.tree</field>
            <field name="model">hr.ter.category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="category"/>
                    <field name="ptkp_ids" widget="many2many_tags"/>
                    <field name="bruto_income_from"/>
                    <field name="bruto_income_to"/>
                    <field name="ter_rate"/>
                </tree>
            </field>
        </record>

        <record id="pph21_ter_categories_search_view" model="ir.ui.view">
            <field name="name">hr.ter.category.search</field>
            <field name="model">hr.ter.category</field>
            <field name="arch" type="xml">
                <search string="PPH21 TER Category">
                    <field name="category"/>
                    <group name="group_by" string="Group By">
                        <filter name="group_by_category" string="Category" domain="[]" context="{'group_by': 'category'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="pph21_ter_categories_action" model="ir.actions.act_window">
            <field name="name">PPH21 TER Categories</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.ter.category</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_group_by_category': 1}</field>
            <field name="search_view_id" ref="pph21_ter_categories_search_view"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new PPH21 TER Category.
                </p>
            </field>
        </record>

        <menuitem name="PPH21 TER Categories" id="pph21_ter_categories_menu" parent="hashmicro_tax_master_data_root" action="pph21_ter_categories_action"/>

    </data>
</odoo>