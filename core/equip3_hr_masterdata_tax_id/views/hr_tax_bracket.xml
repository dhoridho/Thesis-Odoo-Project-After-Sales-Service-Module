<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_tax_bracket_view_form" model="ir.ui.view">
            <field name="name">hr.tax.bracket.form</field>
            <field name="model">hr.tax.bracket</field>
            <field name="arch" type="xml">
                <form string="ModelTitle">
                    <sheet>

                        <group>
                            <group>
                                <field name="sequence" readonly="1"/>
                                <field name="name" required="1"/>
                                <field name="taxable_income_from" required="1"/>
                                <field name="taxable_income_to" required="1"/>
                                <field name="tax_rate" required="1" string="Tax Rate (%)"/>
                                <field name="tax_penalty_rate" required="1" string="Tax Penalty Rate (%)"/>
                                <field name="company_id" readonly="1"/>
                                <!-- <field name="branch_id" /> -->
                                <field name="create_date" />
                                <field name="create_uid" />
                            </group>

                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_tax_bracket_tree_view" model="ir.ui.view">
            <field name="name">hr.tax.bracket.tree</field>
            <field name="model">hr.tax.bracket</field>
            <field name="arch" type="xml">
                <tree string="Tax Bracket">
                    <field name="sequence" />
                    <field name="name"/>
                    <field name="taxable_income_from"/>
                    <field name="taxable_income_to"/>
                    <field name="tax_rate" string="Tax Rate (%)"/>
                    <field name="tax_penalty_rate" string="Tax Penalty Rate (%)"/>
                </tree>
            </field>
        </record>

        <record id="hr_tax_bracket_search_view" model="ir.ui.view">
            <field name="name">hr.tax.bracket.search</field>
            <field name="model">hr.tax.bracket</field>
            <field name="arch" type="xml">
                <search string="Tax Bracket">
                   <field name="name"/>
                    <field name="sequence"/>
                </search>
            </field>
        </record>

        <record id="hr_tax_bracket_act_window" model="ir.actions.act_window">
            <field name="name">Tax Bracket</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.tax.bracket</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Tax Bracket.
                </p>
            </field>
        </record>

        <menuitem name="Tax" id="hashmicro_tax_master_data_root" parent="hr_payroll_community.menu_hr_payroll_community_configuration"/>
        <menuitem name="Tax Bracket" id="hashmicro_tax_bracket" parent="hashmicro_tax_master_data_root" action="hr_tax_bracket_act_window"/>

    </data>
</odoo>