<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_tax_ptkp_harian_lepas_form_view" model="ir.ui.view">
            <field name="name">hr.tax.ptkp.harian.lepas.form</field>
            <field name="model">hr.tax.ptkp.harian.lepas</field>
            <field name="arch" type="xml">
                <form string="PTKP Harian Lepas" delete="false" create="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" invisible="1"/>
                                <field name="daily_income_ptkp"/>
                                <field name="cummulative_income_start"/>
                                <field name="cummulative_income_end"/>
                                <field name="tax_rate"/>
                                <field name="tax_penalty_rate"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_tax_ptkp_harian_lepas_tree_view" model="ir.ui.view">
            <field name="name">hr.tax.ptkp.harian.lepas.tree</field>
            <field name="model">hr.tax.ptkp.harian.lepas</field>
            <field name="arch" type="xml">
                <tree delete="false" create="false">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="hr_tax_ptkp_harian_lepas_act_windows" model="ir.actions.act_window">
            <field name="name">PTKP Harian Lepas</field>
            <field name="res_model">hr.tax.ptkp.harian.lepas</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no PTKP Harian Lepas data
                </p>
            </field>
        </record>

        <menuitem name="PTKP Harian Lepas" id="hr_tax_ptkp_harian_lepas_menu"
                  parent="hr_payroll_community.menu_hr_payroll_community_configuration"
                  action="hr_tax_ptkp_harian_lepas_act_windows"/>

    </data>
</odoo>