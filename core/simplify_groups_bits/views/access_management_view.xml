<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="access_management_form_view_ah" model="ir.ui.view">
            <field name="name">access_management_form_view_ah</field>
            <field name="inherit_id" ref="simplify_access_management.access_management_form_view_ah"/>
            <field name="model">access.management</field>
            <field name="arch" type="xml">
                <xpath expr='//sheet/group/group/field[@name="name"]' position="after">
                    <!--expr="//group[@name='kpis']/group[last()]"-->
                    <field name="apply_by_group"/>
                    <field name="access_res_group_ids" widget='many2many_tags' options="{'no_create': True}"
                           attrs="{'invisible':[('apply_by_group','=',False)]}"/>
                           
                </xpath>
            </field>
        </record>
    </data>
</odoo>
