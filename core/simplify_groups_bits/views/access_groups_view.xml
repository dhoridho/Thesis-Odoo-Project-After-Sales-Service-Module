<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="access_group_form_view" model="ir.ui.view">
            <field name="name">access.group.form.view</field>
            <field name="model">access.group</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <!-- <label for="name" string="Product Name"/> -->
                            <h1>
                                <div class="d-flex">
                                    <field class="text-break" name="name" size='25' default_focus="1" required='1'
                                           placeholder="Name"/>
                                </div>
                            </h1>
                            <group>
                                <field name="user_ids" widget='many2many_tags' options="{'no_create': True}"/>
                                <field name="access_management_ids" widget='many2many_tags' options="{'no_create': True}"/>
                            </group>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="access_group_tree_view" model="ir.ui.view">
            <field name="name">access.group.tree.view</field>
            <field name="model">access.group</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>


        <record id="action_access_group" model="ir.actions.act_window">
            <field name="name">Access Group</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">access.group</field>
            <field name="view_mode">tree,form</field>
        </record>



        <!-- <menuitem id="menu_access_group" name="Access Group"
                  action="action_access_group"
                  parent="simplify_access_management.main_menu_simplify_access_management"
                  sequence="2" 

        /> -->

        <menuitem id="sub_menu_simplify_access_management" name="Access Studio" action="simplify_access_management.action_access_management_ah" parent="simplify_access_management.main_menu_simplify_access_management" sequence="1" groups="simplify_access_management.group_access_management_spt"/>

    </data>
</odoo>