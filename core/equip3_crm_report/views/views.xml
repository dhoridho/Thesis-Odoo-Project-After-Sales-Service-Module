<odoo>
  <data>
    <record id="crm_opportunity_report_view_graph_inherit" model="ir.ui.view">
      <field name="name">crm.opportunity.report.graph.inherit</field>
      <field name="model">crm.lead</field>
      <field name="inherit_id" ref="crm.crm_opportunity_report_view_graph"/>
      <field name="arch" type="xml">
        <field name="prorated_revenue" position="replace">
          <field name="first_to_second_meeting_days" type="measure"/>
          <field name="created_to_second_meeting_days" type="measure"/>
          <!-- For hide Duration to Won -->
          <field name="won_day" type="measure" invisible="1"/>
        </field>
      </field>
    </record>

    <record id="crm_opportunity_report_view_pivot_inherit" model="ir.ui.view">
      <field name="name">crm.opportunity.report.pivot</field>
      <field name="model">crm.lead</field>
      <field name="inherit_id" ref="crm.crm_opportunity_report_view_pivot"/>
      <field name="priority">60</field>
      <field name="arch" type="xml">
        <field name="prorated_revenue" position="replace">
          <!-- For hide Duration to Won -->
          <field name="won_day" type="measure" invisible="1"/>
        </field>
      </field>
    </record>
    <record id="crm_lead_view_graph_report_opportunity_inherit" model="ir.ui.view">
        <field name="name">crm.lead.view.graph.report.opportunity.inherit.partner.assign</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_opportunity_report_view_graph"/>
        <field name="arch" type="xml">
            <xpath expr="//graph" position="inside">
                <!-- For hide Days to Assign -->
                <field name="day_open" invisible="1"/>
                <!-- For hide Automated Probability -->
                <field name="automated_probability" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="crm.crm_opportunity_report_action" model="ir.actions.act_window">
      <field name="context">{'search_default_current': True}</field>
    </record>

    <record id="crm_opportunity_report_view_search_inherit" model="ir.ui.view">
      <field name="name">crm.lead.search</field>
      <field name="model">crm.lead</field>
      <field name="inherit_id" ref="crm.crm_opportunity_report_view_search"/>
      <field name="arch" type="xml">
        <xpath expr="//filter[@name='won']" position="before">
          <filter string="All Included Lost" name="all"
                  domain="['|', ('active', '=', True), ('active', '=', False)]"/>
        </xpath>
      </field>
    </record>

    <record id="crm.crm_opportunity_report_menu" model="ir.ui.menu">
      <field name="name">Leads Analysis</field>
    </record>

    <record id="crm.crm_activity_report_action" model="ir.actions.act_window">
      <field name="name">Follow Ups Analysis</field>
    </record>

    <record id="crm.crm_activity_report_menu" model="ir.ui.menu">
      <field name="name">Follow Ups Analysis</field>
    </record>

    <menuitem
        id="menu_crm_config_config"
        name="Configuration"
        parent="crm.crm_menu_config"
        sequence="1" 
        groups="sales_team.group_sale_manager"/>
    
    <menuitem
        name="Settings"
        id="crm.crm_config_settings_menu"
        parent="menu_crm_config_config"
        sequence="10"/>

    <menuitem
        name="Sales Teams"
        id="crm.crm_team_config"
        parent="menu_crm_config_config"
        sequence="20"/>

    <menuitem
        name="Follow Ups Type"
        id="crm.crm_team_menu_config_activity_types"
        parent="menu_crm_config_config"
        sequence="21"/> 
    
    <menuitem
        name="Recurring Plans"
        id="crm.crm_recurring_plan_menu_config"
        parent="menu_crm_config_config"
        sequence="22"/> 

    <menuitem
        name="Leads"
        id="crm.menu_crm_config_lead"
        parent="menu_crm_config_config"
        sequence="23"/>

    <menuitem
        name="Meeting"
        id="equip3_crm_masterdata.crm_meeting_config_menu_categ"
        parent="menu_crm_config_config"
        sequence="24"/>

  </data>
</odoo>