<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="graph_view_meeting_analysis_report_new" model="ir.ui.view">
        <field name="name">meeting.analysis.report.new.graph</field>
        <field name="model">meeting.analysis.report.new</field>
        <field name="arch" type="xml">
            <graph string="Meeting Analysis" type="bar" orientation="horizontal">
                <field name="user_id" type="row" />
                <field name="duration" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="pivot_view_report_meeting_analysis_report_new" model="ir.ui.view">
        <field name="name">meeting.analysis.report.new.pivot</field>
        <field name="model">meeting.analysis.report.new</field>
        <field name="arch" type="xml">
            <pivot string="Meeting Analysis">
                <field name="user_id" type="row" />
                <field name="start" interval="week" type="col"/>
                <field name="duration" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="tree_view_report_meeting_analysis_report_new" model="ir.ui.view">
        <field name="name">meeting.analysis.report.new.tree</field>
        <field name="model">meeting.analysis.report.new</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="start"/>
                <field name="stop"/>
                <field name="partner_ids"/>
                <field name="location"/>
                <field name="duration"/>
            </tree>
        </field>
    </record>

    <record id="meeting_analysis_report_new_search_view" model="ir.ui.view">
        <field name="name">meeting.analysis.report.new.search</field>
        <field name="model">meeting.analysis.report.new</field>
        <field name="arch" type="xml">
            <search>
                <field name="user_id"/>
                <field name="team_id"/>
                <searchpanel view_types="tree,kanban,pivot,graph">
                    <field name="team_id"/>
                    <field name="user_id" string="Assigned To"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="action_meeting_analysis_new" model="ir.actions.act_window">
        <field name="name">Meeting Analysis</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">meeting.analysis.report.new</field>
        <field name="view_mode">graph,pivot,tree</field>
        <field name="context">{}</field>
    </record>

    <menuitem
            id="menuitem_meeting_analysis_new"
            name="Meeting Analysis"
            parent="crm.crm_menu_report"
            action="action_meeting_analysis_new"
            sequence="5"/>


</odoo>
