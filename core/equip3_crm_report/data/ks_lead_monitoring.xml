<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ks_crm_item_1" model="ks_dashboard_ninja.item">
            <field name="name">Leads Monitoring</field>
            <field name="ks_dashboard_item_type">ks_list_view</field>
            <field name="ks_list_view_layout">layout_3</field>
            <field name="ks_pagination_limit">50</field>
            <field name="ks_model_id" eval="ref('crm.model_crm_lead')"/>
            <field name="ks_list_view_fields"
                   eval="[(6, 0, [ref('crm.field_crm_lead__name'),ref('crm.field_crm_lead__contact_name'),ref('crm.field_crm_lead__partner_id'),ref('crm.field_crm_lead__user_id'),ref('crm.field_crm_lead__team_id'),ref('crm.field_crm_lead__expected_revenue'),ref('crm.field_crm_lead__stage_id')])]"/>
            <field name="ks_sort_by_order">DESC</field>
            <field name="ks_domain">[]</field>
            <field name="ks_sort_by_field" eval="ref('crm.field_crm_lead__id')"/>
            <field name="ks_chart_item_color">default</field>
            <field name="ks_auto_update_type">ks_live_update</field>
            <field name="ks_show_live_pop_up">1</field>
            <field name="ks_company_id" eval="0"/>
        </record>
        <record id="ks_crm_dash" model="ks_dashboard_ninja.board_template">
            <field name="name">Leads Monitoring</field>
            <field name="ks_gridstack_config">[
                {"item_id":"equip3_crm_report.ks_crm_item_1", "data": {"x": 0, "y": 0, "w": 12, "h": 10}}
                ]
            </field>
            <field name="ks_item_count">1</field>
        </record>
        <record model="ks_dashboard_ninja.board" id="lead_dashboard">
            <field name="name">Leads Monitoring</field>
            <field name="ks_dashboard_menu_name">Leads Monitoring</field>
            <field name="ks_dashboard_top_menu_id" ref="crm.crm_menu_root"/>
            <field name="ks_dashboard_default_template" eval="ref('ks_crm_dash')"/>
            <field name="ks_dashboard_active" eval="True"/>
            <field name="ks_dashboard_group_access" eval="False"/>
            <field name="ks_dashboard_menu_sequence" eval="1"/>
        </record>
    </data>
</odoo>