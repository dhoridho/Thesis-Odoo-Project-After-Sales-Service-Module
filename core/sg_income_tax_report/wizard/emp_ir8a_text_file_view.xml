<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- IR8A Text File View -->
   <record id="view_emp_ir8a_text_file_wiz" model="ir.ui.view">
        <field name="name">view.emp.ir8a.text.file.wiz</field>
        <field name="model">emp.ir8a.text.file</field>
        <field name="arch" type="xml">
            <form string="Employee Summary">
                <separator colspan="4" string="Employees"/>
                <field name="employee_ids" required="1" colspan="4" nolabel="1" >
                    <tree string="Employees">
                        <field name="name"/>
                        <field name="department_id"/>
                        <field name="work_email"/>
                    </tree>
                </field>
                <group col="4">
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="source"/>

                    <field name="batch_indicatior"/>
                    <field name="batch_date" />
                    <field name="payroll_user" />
                    <field name="print_type" />
                </group>
                <separator string="" colspan="4"/>
                <footer>
                    <button name="download_ir8a_txt_file" string="Print" type="object" class="oe_highlight"/>
                    or
                    <button special="cancel" string="Cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_print_ir8a_txt_file" model="ir.actions.act_window">
        <field name="name">IR8A</field>
        <field name="res_model">emp.ir8a.text.file</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
   </record>

    <record id="binary_ir8a_txt_wizard_file" model="ir.ui.view">
        <field name="name">binary.ir8a.rule.text.file</field>
        <field name="model">binary.ir8a.text.file.wizard</field>
        <field name="arch" type="xml">
            <form string="View IR8A txt File">
                <group>
                    <field name="name" invisible="1" />
                    <h4>Click On Link To Download Text File: &#160;<field name="ir8a_txt_file" filename="name" nolabel="1"/></h4>
                </group>
                <separator string="" colspan="4"/>
                <footer>
                    <button special="cancel" string="Cancel" colspan="2"/>
                </footer>
            </form>
        </field>
     </record>

    <record id="binary_ir8a_xml_wizard_file" model="ir.ui.view">
        <field name="name">binary.ir8a.rule.xml.file</field>
        <field name="model">binary.ir8a.xml.file.wizard</field>
        <field name="arch" type="xml">
            <form string="View IR8A XML File">
                <group>
                    <field name="name" invisible="1" />
                    <h4>Click On Link To Download Xls File: &#160;<field name="ir8a_xml_file" filename="name" nolabel="1"/></h4>
                </group>
                <separator string="" colspan="4"/>
                <footer>
                    <button special="cancel" string="Cancel" colspan="2"/>
                </footer>
            </form>
        </field>
    </record>

    <menuitem
        action="action_print_ir8a_txt_file"
        id="menu_print_ir8a_txt_file"
        parent="menu_payroll_iras"
        sequence="2"/>

</odoo>
