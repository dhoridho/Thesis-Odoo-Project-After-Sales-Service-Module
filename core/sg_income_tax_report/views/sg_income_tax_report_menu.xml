<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Ir8a Report Menu -->
    <record id="ir8a_form_income_tax_report" model="ir.actions.report">
        <field name="name">IR8A Form Qweb</field>
        <field name="model">emp.ir8a.text.file</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sg_income_tax_report.ir8a_incometax_form_report</field>
    </record>

    <!-- Set Paper Format for the ir8a Report -->
    <record id="ir8a_form_income_tax_report_paperformat" model="report.paperformat">
        <field name="name">IR8A Form</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">3</field>
        <field name="margin_bottom">3</field>
        <field name="margin_left">4</field>
        <field name="margin_right">4</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">20</field>
        <field name="dpi">90</field>
        <field name="report_ids" 
            eval="[(4, ref('sg_income_tax_report.ir8a_form_income_tax_report'))]"/>
    </record>

    <!-- Ir8s Report Menu -->
    <record id="ir8s_form_income_tax_report" model="ir.actions.report">
        <field name="name">IR8S Form Qweb</field>
        <field name="model">emp.ir8s.text.file</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sg_income_tax_report.ir8s_incometax_form_report</field>
    </record>

    <!-- Set Paper Format for the Ir8s Report -->
    <record id="ir8s_form_income_tax_report_paperformat" model="report.paperformat">
        <field name="name">IR8S Form</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">4</field>
        <field name="margin_right">4</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">20</field>
        <field name="dpi">90</field>
        <field name="report_ids" 
            eval="[(4, ref('sg_income_tax_report.ir8s_form_income_tax_report'))]"/>
    </record>

</odoo>
