<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_supplierinfo_search_view_inherit" model="ir.ui.view">
        <field name="name">product.supplierinfo.search.view.inherit</field>
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="product.product_supplierinfo_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter string="Agreement is set" name="purchase_requisition_line_id" domain="[('purchase_requisition_line_id', '!=', False)]"/>
                <filter string="Agreement is not set" name="purchase_requisition_line_id" domain="[('purchase_requisition_line_id', '=', False)]"/>
            </xpath>
        </field>
    </record>

    <record model="ir.actions.server" id="action_request_approval_vendor_pricelist">
        <field name="name">Request for Approval</field>
        <field name="model_id" ref="product.model_product_supplierinfo"/>
        <field name="binding_model_id" ref="product.model_product_supplierinfo"/>
        <field name="binding_view_types">form,list</field>
        <field name="state">code</field>
        <field name="sequence">3</field>
        <field name="code">
            records.action_mass_request_approval()
        </field>
    </record>

    <record model="ir.actions.server" id="action_approve_vendor_pricelist">
        <field name="name">Approve</field>
        <field name="model_id" ref="product.model_product_supplierinfo"/>
        <field name="binding_model_id" ref="product.model_product_supplierinfo"/>
        <field name="binding_view_types">form,list</field>
        <field name="state">code</field>
        <field name="sequence">4</field>
        <field name="code">
            action = records.action_mass_approved()
        </field>
    </record>

    <record model="ir.actions.server" id="action_draft_vendor_pricelist">
        <field name="name">Set to Draft</field>
        <field name="model_id" ref="product.model_product_supplierinfo"/>
        <field name="binding_model_id" ref="product.model_product_supplierinfo"/>
        <field name="binding_view_types">form,list</field>
        <field name="state">code</field>
        <field name="sequence">5</field>
        <field name="code">
            action = records.action_mass_set_to_draft()
        </field>
    </record>

    <record model="ir.actions.server" id="action_reject_vendor_pricelist">
        <field name="name">Reject</field>
        <field name="model_id" ref="product.model_product_supplierinfo"/>
        <field name="binding_model_id" ref="product.model_product_supplierinfo"/>
        <field name="binding_view_types">form,list</field>
        <field name="state">code</field>
        <field name="sequence">6</field>
        <field name="code">
            action = records.action_mass_reject()
        </field>
    </record>

</odoo>