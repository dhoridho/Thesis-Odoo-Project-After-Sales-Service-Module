<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="portal_my_home_menu_vendor_pricelist" name="Portal layout : vendor pricelist menu entries" inherit_id="portal.portal_breadcrumbs" priority="30">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'vendor_pricelist' or vp_id" t-attf-class="breadcrumb-item #{'active ' if not vendor_pricelist else ''}">
                <a t-if="vendor_pricelist" t-attf-href="/my/vendor_pricelist?{{ keep_query() }}" style="color:#aea6a6;pointer-events:none;">Vendor Pricelist</a>
                <t t-else="">Vendor Pricelist</t>
            </li>
            <li t-if="vp_id" class="breadcrumb-item active">
                <span t-field="vendor_pricelist.name.name" /> - <span t-field="vendor_pricelist.product_name" />
            </li>
        </xpath>
    </template>


    <template id="portal_searchbar" inherit_id="portal.portal_searchbar">
        <xpath expr="//div[@id='o_portal_navbar_content']/div/div/span" position="before">
            <t t-if="page_name == 'vendor_pricelist'">
                <span class="btn btn-secondary btn-sm mr-2 vendor_pricelist">
                    Vendor Pricelist Import<input type="file" class="vendor_pricelist_import"/>
                </span>
            </t>
        </xpath>
    </template>

    <template id="portal_my_vendor_pricelist" name="My Vendor Pricelist">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True" />

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Vendor Pricelist</t>
            </t>
            <t t-if="not vendor_pricelist">
                <p>There are currently no Vendor Pricelist for your account.</p>
            </t>
            <div class="vendor_portal_table_scroll">
                <t t-if="vendor_pricelist" t-call="portal.portal_table">
                    <t t-foreach="grouped_vendor_pricelist" t-as="g_vendor_pricelist">
                        <thead>
                            <tr class="thead-light" t-if="groupby and groupby != 'none'">
                                <th colspan="8">
                                    <t t-if="groupby == 'state'">
                                        <em class="font-weight-normal text-muted">Status:</em>
                                        <span t-field="g_vendor_pricelist[0].state"/>
                                    </t>
                                    <t t-if="groupby == 'period_by_day'">
                                        <em class="font-weight-normal text-muted"></em>
                                        <span t-field="g_vendor_pricelist[0].create_date" t-options='{"widget": "date","format": "d MMMM Y"}'/>
                                    </t>
                                    <t t-if="groupby == 'period_by_month'">
                                        <em class="font-weight-normal text-muted"></em>
                                        <span t-field="g_vendor_pricelist[0].create_date" t-options='{"widget": "date","format": "MMMM Y"}'/>
                                    </t>
                                    <t t-if="groupby == 'period_by_year'">
                                        <em class="font-weight-normal text-muted"></em>
                                        <span t-field="g_vendor_pricelist[0].create_date" t-options='{"widget": "date","format": "Y"}'/>
                                    </t>
                                </th>
                            </tr>
                            <tr>
                                <th>Vendor Product Name</th>
                                <th class="text-left">Vendor Product Code</th>
                                <th class="text-right">Minimal Quantity</th>
                                <th class="text-right">Unit Price</th>
                                <th class="text-right">Created Date</th>
                                <th class="text-right">Expired Date</th>
                                <th class="text-right">Status</th>
                                <th class="text-left">Request for Amendment</th>
                                <th style="display:none;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="g_vendor_pricelist" t-as="vp">
                                <tr>
                                    <td class="text-left">
                                        <a t-attf-href="/my/vendor_pricelist/#{vp.id}?#{keep_query()}"><t t-esc="vp.product_name" /></a>
                                    </td>
                                    <td class="text-left"><span t-field="vp.product_code" /></td>
                                    <td class="text-right"><span t-field="vp.min_qty"/> <span t-field="vp.product_uom.name"/></td>
                                    <td class="text-right"><span t-field="vp.price" /> <span t-field="vp.currency_id.name" /></td>
                                     <td class="text-right"><span t-field="vp.create_date" t-options="{'widget':'date'}"/></td>
                                    <td class="text-right"><span t-field="vp.date_end"/></td>
                                    <td class="tx_status text-right">
                                        <t t-if="vp.state1 == 'draft'">
                                            <span class="badge badge-pill badge-secondary"><i class="fa fa-fw fa-clock-o" aria-label="Draft" title="Draft" role="img"></i><span class="d-none d-md-inline"> Draft</span></span>
                                        </t>
                                        <t t-if="vp.state1 == 'waiting_approval'">
                                            <span class="badge badge-pill badge-info"><i class="fa fa-fw fa-clock-o" aria-label="Waiting for Approval" title="Waiting for Approval" role="img"></i><span class="d-none d-md-inline"> Waiting for Approval</span></span>
                                        </t>
                                        <t t-if="vp.state1 == 'approved'">
                                            <span class="badge badge-pill badge-success"><i class="fa fa-fw fa-check" aria-label="Approved" title="Approved" role="img"></i><span class="d-none d-md-inline"> Approved</span></span>
                                        </t>
                                        <t t-if="vp.state1 == 'rejected'">
                                            <span class="badge badge-pill badge-warning"><i class="fa fa-fw fa-remove" aria-label="Rejected" title="Rejected" role="img"></i><span class="d-none d-md-inline"> Rejected</span></span>
                                        </t>
                                        <t t-if="vp.state1 == 'expire'">
                                            <span class="badge badge-pill badge-warning"><i class="fa fa-fw fa-remove" aria-label="Expired" title="Expired" role="img"></i><span class="d-none d-md-inline"> Expired</span></span>
                                        </t>
                                    </td>
                                    <td class="tx_status text-right">
                                        <a  t-attf-href="/vendor_pricelist/#{vp.id}?#{keep_query()}" title="Request for Amendment" aria-label="Request for Amendment" class="btn btn-sm btn-primary request-for-amendment">
                                            <span class='d-none d-md-inline'> Request for Amendment</span>
                                        </a>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </t>
                </t>
            </div>
        </t>
    </template>

    <template id="vendor_pricelist_portal_content" name="Vendor Pricelist Portal Content">
        <!-- Intro -->
        <div id="introduction" t-attf-class="pb-2 pt-3 #{'card-header bg-white' if report_type == 'html' else ''}">
            <h2 class="my-0">
                <em t-esc="vendor_pricelist.name.name" />
            </h2>
        </div>
        <div class="card-body-parent">
            <div t-attf-class="#{'card-body' if report_type == 'html' else ''}">
                <section id="details1" style="page-break-inside: auto;" class="mt32">
                    <h3 id="details1">Vendor</h3>
                    <table class="table">
                        <thead>
                            <tr>
                                <th><strong>Vendor Product Name</strong></th>
                                <th><strong>Vendor Product Code</strong></th>
                                <th><strong>Delivery Lead Time</strong></th>
                                <th><strong>Branch</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <span t-field="vendor_pricelist.product_name" />
                                </td>
                                <td>
                                    <span t-field="vendor_pricelist.product_code" />
                                </td>
                                <td>
                                    <span t-field="vendor_pricelist.delay"/> Days
                                </td>
                                <td>
                                    <span t-field="vendor_pricelist.branch_id.name" />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <h3 id="details2" class="mt-5">Pricelist</h3>
                    <table class="table">
                        <thead>
                            <tr>
                                <th><strong>Minimal Quantity</strong></th>
                                <th><strong>Unit Price</strong></th>
                                <th><strong>Validity</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <span t-field="vendor_pricelist.min_qty"/>
                                    <span t-field="vendor_pricelist.product_uom.name" />
                                </td>
                                <td>
                                    <span t-field="vendor_pricelist.price" />
                                    <span t-field="vendor_pricelist.currency_id.name" />
                                </td>
                                <td>
                                    <span t-field="vendor_pricelist.date_start" /> to
                                    <span t-field="vendor_pricelist.date_start" />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </section>
            </div>
        </div>
    </template>

    <template id="portal_vendor_pricelist_form_template" name="Vendor Pricelist Portal Template" inherit_id="portal.portal_sidebar" primary="True">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <div class="row mt16 o_portal_sale_sidebar">
                <!-- Sidebar -->
                <t t-call="portal.portal_record_sidebar">
                    <t t-set="classes" t-value="'col-lg-auto d-print-none'"/>
                    <t t-set="title">
                        <div class="btn-group  flex-grow-1 mr-1 mb-1">
                            <a class="btn btn-secondary btn-block o_download_btn" t-attf-href="/vendor_pricelist/#{vendor_pricelist.id}?#{keep_query()}">Request for Amendment</a>
                        </div>
                    </t>

                    <t t-set="entries">
                        <ul class="list-group list-group-flush flex-wrap flex-row flex-lg-column">
                            <li t-if="vendor_pricelist.name" class="list-group-item flex-grow-1">
                                <div class="small mb-1"><strong class="text-muted">
                                    Vendor
                                </strong></div>
                                <div class="row">
                                    <div class="col flex-grow-0 pr-2">
                                        <img t-if="vendor_pricelist.name.image_1024" class="rounded-circle mt-1 o_portal_contact_img" t-att-src="image_data_uri(vendor_pricelist.name.image_1024)" alt="Contact"/>
                                        <img t-else="" class="rounded-circle mt-1 o_portal_contact_img" src="/web/static/src/img/user_menu_avatar.png" alt="Contact"/>
                                    </div>
                                    <div class="col pl-0">
                                        <span t-field="vendor_pricelist.name" t-options='{"widget": "contact", "fields": ["name", "phone"], "no_marker": True}'/>
                                        <a href="#discussion" class="small"><i class="fa fa-fw fa-comments"/><b>Send message</b></a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </t>
                </t>
                <!-- Page content -->
                <div id="rfq_content" class="col-12 col-lg justify-content-end">
                    <div t-attf-class="card #{'pb-5' if report_type == 'html' else ''}">
                        <div t-call="equip3_purchase_vendor_portal.vendor_pricelist_portal_content" />
                    </div>
                    <div id="vendor_pricelist_communication" class="mt-4">
                        <h2>History</h2>
                        <t t-call="portal.message_thread">
                            <t t-set="object" t-value="vendor_pricelist" />
                        </t>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

</odoo>