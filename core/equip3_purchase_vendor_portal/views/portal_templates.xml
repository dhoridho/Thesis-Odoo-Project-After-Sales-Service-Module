<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <template id="portal_my_home" inherit_id="portal.portal_my_home">
        <xpath expr="//div[hasclass('o_portal_my_home')]" position="attributes">
            <attribute name="class">o_portal_my_home o_portal_documents</attribute>
        </xpath>
        <xpath expr="//div[hasclass('o_portal_docs')]" position="before">
            <div class="o_portal_documents_parent">
            </div>
        </xpath>
        <xpath expr="//div[hasclass('o_portal_documents_parent')]" position="inside">
            <xpath expr="//div[hasclass('o_portal_docs')]" position="move"/>
        </xpath>
    </template>

    <template id="frontend_layout" name="Main Frontend Layout" inherit_id="web.frontend_layout">
        <xpath expr="//div[@id='wrapwrap']" position="attributes">
            <attribute name="t-attf-class" add="#{'vendor_rfq_view' if request.httprequest.path.startswith('/my/rfq') else ''}" separator=" "/>
            <attribute name="t-attf-class" add="#{'open_tender_view' if request.httprequest.path.startswith('/open_tender') else ''}" separator=" "/>
            <attribute name="t-attf-class" add="#{'vendor_purchase_view' if request.httprequest.path.startswith('/my/purchase') else ''}" separator=" "/>
            <attribute name="t-attf-class" add="#{'vendor_tender_view' if request.httprequest.path.startswith('/my/tender') else ''}" separator=" "/>
            <attribute name="t-attf-class" add="#{'vendor_pricelist_view' if request.httprequest.path.startswith('/my/vendor_pricelist') else ''}" separator=" "/>
            <attribute name="t-attf-class" add="#{'vendor_pricelist_form_view' if request.httprequest.path.startswith('/vendor_pricelist') else ''}" separator=" "/>
            <attribute name="t-attf-class" add="#{'blanket_order_view' if request.httprequest.path.startswith('/my/blanket/order') else ''}" separator=" "/>
            <attribute name="t-attf-class" add="#{'invoice_view' if request.httprequest.path.startswith('/my/invoices') else ''}" separator=" "/>
            <attribute name="t-attf-class" add="#{'vendor_sign_up_view' if request.httprequest.path.startswith('/vendor_sign_up') else ''}" separator=" "/>
            <attribute name="t-attf-class" add="#{'vendor_documents' if request.env.user.has_group('equip3_purchase_vendor_portal.group_vendor_user') else 'customer_documents'}" separator=" "/>
        </xpath>
    </template>

    <template id="purchase_portal_my_home" name="My Purchase Portal">
        <t t-call="portal.portal_layout">
            <t t-set="my_details" t-value="True"/>
            <div class="o_portal_my_home o_portal_documents">
                <div class="oe_structure" id="oe_structure_portal_my_home_1"/>
                <h3>Vendor Documents</h3>
                <div class="o_portal_documents_parent">
                    <div class="o_portal_docs list-group">

                        <!-- <t t-if="request.env.user.is_tendor_vendor==True"> -->
                            <t t-call="portal.portal_docs_entry">
                                <t t-set="title">Tenders </t>
                                <t t-set="url" t-value="'/my/tender'"/>
                                <t t-set="placeholder_count" t-value="'tender_count'"/>
                            </t>
                            <t t-call="portal.portal_docs_entry">
                                <t t-set="title">Tender Submission</t>
                                <t t-set="url" t-value="'/my/rfq-tender'"/>
                                <t t-set="placeholder_count" t-value="'rfq_tender_count'"/>
                            </t>
                            <t t-call="portal.portal_docs_entry">
                                <t t-set="title">Open Tender</t>
                                <t t-set="url" t-value="'/open_tender'"/>
                                <t t-set="placeholder_count" t-value="'tender_count'"/>
                            </t>
                            <t t-call="portal.portal_docs_entry">
                                <t t-set="title">Open Tender Submission</t>
                                <t t-set="url" t-value="'/my/rfq-open-tender'"/>
                                <t t-set="placeholder_count" t-value="'rfq_open_tender_count'"/>
                            </t>
                            <t  t-call="portal.portal_docs_entry">
                                <t t-set="title">Request For Quotation</t>
                                <t t-set="url" t-value="'/my/rfq'"/>
                                <t t-set="placeholder_count" t-value="'rfq_count'"/>
                            </t>
                            <t t-call="portal.portal_docs_entry">
                                <t t-set="title">Sales Orders</t>
                                <t t-set="url" t-value="'/my/purchase'"/>
                                <t t-set="placeholder_count" t-value="'purchase_count'"/>
                            </t>
                            <t t-call="portal.portal_docs_entry">
                                <t t-set="title">Invoices</t>
                                <t t-set="url" t-value="'/my/invoices'"/>
                                <t t-set="placeholder_count" t-value="'invoice_count'"/>
                            </t>
                
                            
                            <t t-call="portal.portal_docs_entry">
                                <t t-set="title">Blanket Order</t>
                                <t t-set="url" t-value="'/my/blanket/order'"/>
                                <t t-set="placeholder_count" t-value="'blanket_order_count'"/>
                            </t>
                            <t t-call="portal.portal_docs_entry">
                                <t t-set="title">Vendor Pricelist</t>
                                <t t-set="url" t-value="'/my/vendor_pricelist'"/>
                                <t t-set="placeholder_count" t-value="'vendor_pricelist_count'"/>
                            </t>
                            
                        <!-- </t> -->
          
                    </div>
                </div>
            </div>
            <div class="oe_structure" id="oe_structure_portal_my_home_2"/>
        </t>
    </template>

</odoo>