<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="portal_my_purchase_orders_template" name="Portal: My Purchase Orders">
            <t t-call="portal.portal_layout">
                <t t-set="breadcrumbs_searchbar" t-value="True"/>
                <t t-call="portal.portal_searchbar"/>
                <t t-if="orders" t-call="portal.portal_table">
                    <t t-foreach="grouped_purchase_order" t-as="g_purchase_order">
                        <thead>
                            <tr class="thead-light" t-if="groupby and groupby!='none'">
                                <th colspan="8">
                                    <t t-if="groupby == 'billing_status'">
                                        <em class="font-weight-normal text-muted">Billing Status:</em>
                                        <span t-field="g_purchase_order[0].invoice_status"/>
                                    </t>
                                    <t t-if="not g_purchase_order[0].date_approve and groupby in ['period_by_day','period_by_month','period_by_year'] ">
                                        <em class="font-weight-normal text-muted"></em>
                                        <span>Not have confirmation date</span>
                                    </t>
                                    <t t-if="groupby == 'period_by_day'">
                                        <em class="font-weight-normal text-muted"></em>
                                        <span t-field="g_purchase_order[0].date_approve" t-options='{"widget": "date","format": "d MMMM Y"}' t-if="g_purchase_order[0].date_approve"/>
                                    </t>
                                    <t t-if="groupby == 'period_by_month'">
                                        <em class="font-weight-normal text-muted"></em>
                                        <span t-field="g_purchase_order[0].date_approve" t-options='{"widget": "date","format": "MMMM Y"}' t-if="g_purchase_order[0].date_approve"/>
                                    </t>
                                    <t t-if="groupby == 'period_by_year'">
                                        <em class="font-weight-normal text-muted"></em>
                                        <span t-field="g_purchase_order[0].date_approve" t-options='{"widget": "date","format": "Y"}' t-if="g_purchase_order[0].date_approve"/>
                                    </t>
                                </th>
                            </tr>
                            <tr class="active">
                                <th>Purchase Reference</th>
                                <th>Tender</th>
                                <th class="text-right">Confirmation Date</th>
                                <th class="text-right">Billing Status</th>
                                <th class="text-right">Total</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="g_purchase_order" t-as="order">
                                <tr t-att-data-id="order.id">
                                    <td>
                                        <a t-att-href="order.get_portal_url()">
                                            <t t-esc="order.name"/>
                                        </a>
                                    </td>
                                    <td>
                                        <a t-attf-href="/my/tender/#{order.agreement_id.id}?#{keep_query()}">
                                            <t t-esc="order.agreement_id.name" />
                                        </a>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="order.date_approve"/>
                                    </td>
                                    <td class="text-right">
                                        <t t-if="order.invoice_status == 'no'">
                                            <span class="badge badge-secondary">
                                                <i class="fa fa-fw fa-remove"/>
                                                Nothing to Bill
                                            </span>
                                        </t>
                                        <t t-if="order.invoice_status == 'to invoice'">
                                            <span class="badge badge-info">
                                                <i class="fa fa-fw fa-file-text"/>
                                                Waiting for Bill
                                            </span>
                                        </t>
                                        <t t-if="order.invoice_status == 'invoiced'">
                                            <span class="badge badge-success">
                                                <i class="fa fa-fw fa-check"/>
                                                Fully Billed
                                            </span>
                                        </t>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="order.amount_total" t-options='{"widget": "monetary", "display_currency": order.currency_id}'/>
                                    </td>
                                    <td>
                                        <button type="button" name="update_vendor_invoice" class="btn btn-primary update-vendor-invoice">Update Vendor Invoice</button>
                                    </td>
                                </tr>
                            </t>
                            <div class="modal fade" id="updatevendorinvoice" tabindex="-1" role="dialog" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLongTitle">Upload Vendor Invoice</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">x</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="d-flex">
                                                <label for="files">Upload files:</label>
                                                <input type="file" id="vendor_invoice_files" class="ml-2" name="files" multiple="multiple"/>
                                            </div>
                                            <input type="text" class="d-none" id="purchase_id"/>
                                            <textarea name="vendor_files" class="d-none"/>
                                            <ul class="d-none mt-3" style="list-style-type: none;">
                                                <li class="d-none">
                                                    <a href="#" target="_blank">
                                                        <span class="fa fa-download"/>
                                                        <span class="name ml-2"></span>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-primary save_vendor_invoice">Upload</button>
                                            <button type="button" class="btn btn-fill-light" data-dismiss="modal">Discard</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </tbody>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>