<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <template id="sale.portal_my_home_sale" name="Show Quotations / Sales Orders" customize_show="True" inherit_id="portal.portal_my_home" priority="20">
            <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            </xpath>
        </template>

        <template id="account.portal_my_home_menu_invoice" name="Portal layout : invoice menu entries" inherit_id="portal.portal_breadcrumbs" priority="30">
            <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
                <li t-if="page_name == 'invoice'" t-attf-class="breadcrumb-item #{'active ' if not invoice else ''}">
                    <a t-if="invoice" t-attf-href="/my/invoices?{{ keep_query() }}">Invoices</a>
                    <t t-else="">Invoices</t>
                </li>
                <li t-if="invoice" class="breadcrumb-item active">
                    <t t-esc="invoice.name" t-if="invoice.name != '/'"/>
                    <t t-else=""><em>Draft Invoice</em></t>
                </li>
            </xpath>
        </template>
  
        <template id="purchase.portal_my_home_purchase" name="Show Purchase Orders" customize_show="True" inherit_id="portal.portal_my_home" priority="25">
        </template>
        <!-- Purchase Tender -->
        <template id="portal_tender_my_home" inherit_id="sh_po_tender_portal.portal_tender_my_home">
            <xpath expr="//t[contains(@t-if, 'request.env.user.is_tendor_vendor==True')]" position="replace">
                <t t-if="is_vendor">
                    <!-- <t t-if="request.env.user.is_tendor_vendor==True">
                        <t t-call="portal.portal_docs_entry">
                            <t t-set="title">Purchase Tenders</t>
                            <t t-if="tenders">
                                <t t-set="url" t-value="'/my/tender'" />
                            </t>
                            <t t-set="placeholder_count" t-value="'tender_count'" />
                        </t>
                    </t> -->
                </t>
            </xpath>
        </template>
    </data>
</odoo>