                <a t-if="bo_id" t-attf-href="/my/blanket/order?{{ keep_query() }}">Blanket Order</a>
                <t t-else="">Blanket Order</t>
            </li>
            <li t-if="bo_id" class="breadcrumb-item active">
              <t t-esc="bo_id.name"/>
            </li>
        </xpath>
    </template>

