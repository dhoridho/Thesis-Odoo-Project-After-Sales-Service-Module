    <template id="portal_my_blanket_order" name="My Blanket Order">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True" />

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Blanket Order</t>
            </t>
            <t t-if="not blanket_order">
                <p>There are currently no Blanket Order for your account.</p>
            </t>
            <t t-if="blanket_order" t-call="portal.portal_table">
                <t t-foreach="grouped_blanket_order" t-as="g_blanket">
                    <thead>
                        <tr class="thead-light" t-if="groupby and groupby != 'none'">
                            <th colspan="8">
                                <t t-if="groupby == 'bo_state2'">
                                    <em class="font-weight-normal text-muted">Status:</em>
                                    <span t-field="g_blanket[0].bo_state2"/>
                                </t>
                                <t t-if="groupby == 'period_by_day'">
                                    <em class="font-weight-normal text-muted"></em>
                                    <span t-field="g_blanket[0].ordering_date" t-options='{"widget": "date","format": "d MMMM Y"}'/>
                                </t>
                                <t t-if="groupby == 'period_by_month'">
                                    <em class="font-weight-normal text-muted"></em>
                                    <span t-field="g_blanket[0].ordering_date" t-options='{"widget": "date","format": "MMMM Y"}'/>
                                </t>
                                <t t-if="groupby == 'period_by_year'">
                                    <em class="font-weight-normal text-muted"></em>
                                    <span t-field="g_blanket[0].ordering_date" t-options='{"widget": "date","format": "Y"}'/>
                                </t>
                            </th>
                    
                        </tr>
                        <tr>
                            <th class="text-left">Blanket Order</th>
                            <th class="text-right">Vendor</th>
                            <th class="text-right">Reference</th>
                            <th class="text-right">Order Date</th>
                            <th class="text-right">Agreement Deadline</th>
                            <th class="text-right">Status</th>
                        </tr>
                    </thead>
                    <t t-foreach="g_blanket" t-as="bo">
                        <tr>
                            <td class="text-left">
                                <a t-attf-href="/my/blanket/order/#{bo.id}?#{keep_query()}"><t t-esc="bo.name" /></a>
                            </td>
                            <td class="text-right"><span t-field="bo.vendor_id" /></td>
                            <td class="text-right"><span t-field="bo.origin"/></td>
                            <td class="text-right"><span t-field="bo.ordering_date" /></td>
                            <td class="text-right"><span t-esc="bo.date_end.strftime('%Y-%m-%d %H:%M')"/></td>
                            <td class="tx_status text-right">
                                <t t-if="bo.bo_state == 'pending_order'">
                                    <span class="badge badge-pill" style="background-color:#0500FF;color:#fff;">Pending</span>
                                </t>
                                <t t-if="bo.bo_state == 'ongoing'">
                                    <span class="badge badge-pill badge-success">Ongoing</span>
                                </t>
                                <t t-if="bo.bo_state == 'close'">
                                    <span class="badge badge-pill badge-warning">Closed</span>
                                </t>
                                <t t-if="bo.bo_state == 'cancel'">
                                    <span class="badge badge-pill badge-light">Cancel</span>
                                </t>
                            </td>
                        </tr>
                    </t>
                </t>
            </t>
        </t>
    </template>

    <template id="portal_blanket_order_page" name="Blanket Order Template" inherit_id="portal.portal_sidebar" primary="True">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <div class="row mt16 o_portal_sale_sidebar">
                <!-- Sidebar -->
                <t t-call="portal.portal_record_sidebar">
                    <t t-set="classes" t-value="'col-lg-auto d-print-none'"/>
                    <t t-set="entries">
                        <ul class="list-group list-group-flush flex-wrap flex-row flex-lg-column">
                            <li class="list-group-item flex-grow-1">
                                <div class="o_download_pdf btn-toolbar flex-sm-nowrap">
                                    <div class="btn-group  flex-grow-1 mr-1 mb-1">
                                        <a class="btn btn-secondary btn-block o_download_btn" t-att-href="bo_id.get_portal_url(report_type='pdf', download=True)" title="Download"><i class="fa fa-download"/> Download</a>
                                    </div>
                                    <div class="btn-group flex-grow-1 mb-1">
                                        <a class="btn btn-secondary btn-block o_print_btn o_portal_blanket_order_print" t-att-href="bo_id.get_portal_url(report_type='pdf')" id="print_blanket_order_report" title="Print" target="_blank"><i class="fa fa-print"/> Print</a>
                                    </div>
                                </div>
                            </li>

                            <li class="navspy list-group-item pl-0 flex-grow-1" t-ignore="true" role="complementary">
                                <ul class="nav flex-column bs-sidenav"></ul>
                            </li>
                            <li class="list-group-item flex-grow-1">
                                <div class="small mb-1"><strong class="text-muted">Responsible</strong></div>
                                <div class="row flex-nowrap">
                                    <div class="col flex-grow-0 pr-2">
                                        <img class="rounded-circle mr4 float-left o_portal_contact_img"
                                            t-if="bo_id.create_uid.image_1024"
                                            t-att-src="image_data_uri(bo_id.create_uid.image_1024)" alt="Contact"/>
                                        <img class="rounded-circle mr4 float-left o_portal_contact_img"
                                            t-if="not bo_id.create_uid.image_1024"
                                            src="/web/static/src/img/placeholder.png" alt="Contact"/>
                                    </div>
                                    <div class="col pl-0" style="min-width: 150px;">
                                        <span t-field="bo_id.create_uid"
                                            t-options='{"widget": "contact", "fields": ["name", "phone"], "no_marker": True}'/>
                                        <a href="#discussion" class="small"><i class="fa fa-comment"></i> Send
                                            message</a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </t>
                </t>

                <div id="blanket_order_content" class="col-12 col-lg">
                    <div class="o_portal_html_view shadow p-3">
                        <div class="o_portal_html_loader text-center">
                            <i class="fa fa-circle-o-notch fa-spin fa-2x fa-fw text-black-50"></i>
                        </div>
                        <iframe id="blanket_order_html" class="mt8 mb8" width="100%" style="height:700px;" frameborder="0" t-att-src="bo_id.get_portal_url(report_type='html')"/>
                    </div>
                    <!-- chatter -->
                    <div id="blanket_order_communication" class="mt-4">
                        <h2>History</h2>
                        <t t-call="portal.message_thread">
                            <t t-set="object" t-value="blanket_order"/>
                        </t>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>