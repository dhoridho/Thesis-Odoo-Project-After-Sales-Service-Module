<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- SECURITY GROUP  -->
        <record id="group_portal_vendor" model="res.groups">
            <field name="name">Is Portal Vendor</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <record id="base.group_portal" model="res.groups">
            <field name="name">Portal</field>
            <field name="comment">Portal members have specific access rights (such as record rules and restricted menus).
                They usually do not belong to the usual Odoo groups.</field>
            <field name="implied_ids" eval="[(4, ref('base.group_partner_manager'))]"/>
        </record>

        <!-- WEBSITE MENU & PAGE  -->
        <record id="vendor_pricelist_form_page" model="website.page">
            <field name="url">/vendor_pricelist</field>
            <field name="website_published">True</field>
            <field name="view_id" ref="vendor_pricelist_form_view" />
        </record>
        <record id="menu_vendor_pricelist_form" model="website.menu">
            <field name="name">Vendor Pricelist</field>
            <field name="url">/vendor_pricelist</field>
            <field name="parent_id" ref="website.main_menu" />
            <field name="sequence" type="int">50</field>
            <field name="page_id" ref="vendor_pricelist_form_page" />
            <field name="group_ids" eval="[(6, 0, [ref('equip3_purchase_vendor_portal.group_portal_vendor')])]"/>
        </record>

        <record id="tender_dashboard_form_page" model="website.page">
            <field name="url">/tender/dashboard</field>
            <field name="website_published">True</field>
            <field name="view_id" ref="tender_dashboard_form_view" />
        </record>
        

        <record id="new1_documents_page" model="website.page">
            <field name="name">Documents</field>
            <field name="url">/my/home</field>
            <field name="website_published">True</field>
            <field name="view_id" ref="portal.portal_my_home" />
        </record>
        

        <record id="new1_purchase_documents_page" model="website.page">
            <field name="name">Vendor Documents </field>
            <field name="url">/my/purchase/home</field>
            <field name="website_published">True</field>
            <field name="view_id" ref="equip3_purchase_vendor_portal.purchase_portal_my_home" />
        </record>
        

        

        <record id="sh_vendor_signup.menu_vendor_sign_up_form" model="website.menu">
            <field name="name">Vendor Request</field>
            <field name="url">/vendor_sign_up</field>
            <field name="parent_id" ref="website.main_menu" />
            <field name="sequence" type="int">50</field>
            <field name="page_id" ref="sh_vendor_signup.vendor_sign_up_form_page" />
            <field name="group_ids" eval="[(6, 0, [])]"/>
        </record>

        <record id="open_tender_form_page" model="website.page">
            <field name="name">Open Tender</field>
            <field name="url">/open_tender</field>
            <field name="website_published">True</field>
            <field name="view_id" ref="sh_po_tender_portal.portal_my_tenders" />
        </record>
        <record id="menu_open_tender_form" model="website.menu">
            <field name="name">Open Tender</field>
            <field name="url">/open_tender</field>
            <field name="parent_id" ref="website.main_menu" />
            <field name="sequence" type="int">11</field>
            <field name="page_id" ref="open_tender_form_page" />
            <field name="user_not_logged">True</field>
        </record>
    </data>

    <data noupdate="1">

        <record id="new_menu_tender_dashboard_form" model="website.menu">
            <field name="name">Tender Dashboard</field>
            <field name="url">/tender/dashboard</field>
            <field name="sequence" type="int">10</field>
            <field name="page_id" ref="tender_dashboard_form_page" />
            <field name="group_ids" eval="[(6, 0, [ref('equip3_purchase_vendor_portal.group_portal_vendor')])]"/>
        </record>

        <record id="new1_documents_page_list" model="website.menu">
            <field name="name">Documents</field>
            <field name="url">/my/home</field>
            <field name="sequence" type="int">3</field>
            <field name="page_id" ref="new1_documents_page" />
            <field name="user_not_logged">True</field>
        </record>

        <record id="new1_purchase_documents_page_list" model="website.menu">
            <field name="name">Vendor Documents </field>
            <field name="url">/my/purchase/home</field>
            <field name="sequence" type="int">4</field>
            <field name="page_id" ref="new1_purchase_documents_page" />
            <field name="user_not_logged">True</field>
            <field name="group_ids" eval="[(6, 0, [ref('equip3_purchase_vendor_portal.group_portal_vendor')])]"/>
        </record>


    </data>

    

    

</odoo>