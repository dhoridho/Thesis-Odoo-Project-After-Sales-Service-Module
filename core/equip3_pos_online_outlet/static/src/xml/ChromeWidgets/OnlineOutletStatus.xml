<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="OnlineOutletStatus" owl="1">
       <div class="change-outlet-status pos-dropdown radius-right" 
            t-on-click.stop="state.showOptions = !state.showOptions"
            t-att-data-value="getState()">
            <span class="down-icon">
                <i aria-hidden="true" class="fa fa fa-chevron-down"></i>
            </span>
            <span class="down-selected">
                <i aria-hidden="true" class="fa fa fa-circle"></i> 
                <span style="text-transform: Capitalize;"> <t t-esc="getState()"/></span>
            </span>
            <ul t-if="state.showOptions" class="options">
                <li t-on-click="changeOutletState('open')">
                    <i aria-hidden="true" class="fa fa fa-circle" style="color:green;"></i><span> Open</span>
                </li>
                <li t-on-click="changeOutletState('closed')">
                    <i aria-hidden="true" class="fa fa fa-circle" style="color:red;"></i> <span> Closed</span>
                </li>
            </ul>
        </div>
    </t>
 

</templates>
