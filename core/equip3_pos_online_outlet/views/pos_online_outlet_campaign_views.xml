<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="pos_online_outlet_campaign_form" model="ir.ui.view">
        <field name="name">pos.online.outlet.campaign</field>
        <field name="model">pos.online.outlet.campaign</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <field name="create_date" invisible="1"/>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div name="oe_title_header" class="oe_title">
                        <h1>
                            <field name="name" placeholder="Campaign name" required="1"
                                attrs="{'readonly': [('campaign_type','=','gofood'), ('create_date','!=',False)]}"/>
                        </h1>
                        <div name="options">
                            <div attrs="{'invisible': [('campaign_type','!=',False)]}">
                                <p><b>Please specify campaign type!</b></p>
                            </div>
                            <div class="d-flex align-items-center">
                                <label for="campaign_type"/>
                                <field name="campaign_type" style="width:35%;" class="mb-0" 
                                    attrs="{'readonly': [('create_date','!=',False)]}"
                                    required="1"/>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pos_online_outlet_campaign_tree" model="ir.ui.view">
        <field name="name">pos.online.outlet.campaign.tree</field>
        <field name="model">pos.online.outlet.campaign</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="campaign_type"/>
            </tree>
        </field>
    </record>

    <record id="pos_online_outlet_campaign_search" model="ir.ui.view">
        <field name="name">pos.online.outlet.campaign.filter</field>
        <field name="model">pos.online.outlet.campaign</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="campaign_type"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="pos_online_outlet_campaign_action">
        <field name="name">Campaign</field>
        <field name="res_model">pos.online.outlet.campaign</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem 
        id="pos_online_outlet_campaign_menu"
        name="Campaign"
        action="pos_online_outlet_campaign_action"
        parent="pos_online_outlet_menu_root"
        groups="equip3_pos_masterdata.group_pos_supervisor,equip3_pos_masterdata.group_pos_manager,equip3_pos_masterdata.group_pos_staff,equip3_pos_masterdata.group_pos_cashier,equip3_pos_masterdata.group_pos_waiter"
        sequence="8"/>

</odoo>
