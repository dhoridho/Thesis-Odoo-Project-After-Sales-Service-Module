<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="product_pos_category_form_view_inherit" model="ir.ui.view">
        <field name="name">product.pos.category.form.view.inherit</field>
        <field name="model">pos.category</field>
        <field name="inherit_id" ref="point_of_sale.product_pos_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_id']" position="after">
                <field name="is_online_outlet"/>
            </xpath>
       	</field>
    </record>

    <record id="pos_masterdata_product_pos_category_form_view_inherit" model="ir.ui.view">
        <field name="name">product.pos.category.form.view.inherit</field>
        <field name="model">pos.category</field>
        <field name="inherit_id" ref="equip3_pos_masterdata.product_pos_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Online Outlet" 
                    attrs="{'invisible': [('is_online_outlet','!=',True)]}">
                    <field name="is_online_outlet" invisible="1"/>
                    <group>
                        <group string="Selling Time">
                            <field name="is_use_outlet_operational_hours"/>
                            <field name="selling_time_id"
                                options="{'no_create': True}"
                                attrs="{
                                    'invisible': [('is_use_outlet_operational_hours','=',True)],
                                    'required': [('is_use_outlet_operational_hours','=',False)] }"/> 
                        </group> 
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>