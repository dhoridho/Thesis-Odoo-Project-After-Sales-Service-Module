<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
 
    <record id="pos_online_outlet_order_form" model="ir.ui.view">
        <field name="name">pos.online.outlet.order.form</field>
        <field name="model">pos.online.outlet.order</field>
        <field name="arch" type="xml">
            <form create="false" edit="false" delete="false">
                <header> 
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_pos_order"
                            type="object"
                            class="oe_stat_button"
                            icon="o-hm-icon o-hm-smart-pos-orders"
                            attrs="{'invisible':[('pos_order_count', '=', 0)]}">
                            <field name="pos_order_count" widget="statinfo" string="POS Orders"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="order_number" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group> 
                            <field name="order_date" readonly="1"/>
                            <field name="online_outlet_id" readonly="1"/>
                            <field name="status" readonly="1" invisible="1"/>
                            <field name="online_state"/>
                            <field name="order_date_str" readonly="1" invisible="1"/>
                        </group>
                        <group>
                            <field name="order_from" readonly="1"/>
                            <field name="order_type" readonly="1"/>
                            <field name="state" readonly="1"/>
                            <field name="payment_type" readonly="1"/>
                            <field name="amount_total_order" readonly="1" invisible="1"/>
                        </group>
                    </group> 
                    <notebook>
                        <page string="Order Lines">
                            <field name="line_ids" readonly="1">
                                <tree>
                                    <field name="order_id" invisible="1"/>
                                    <field name="is_main_product" invisible="1"/>
                                    <field name="is_delivery" invisible="1"/>
                                    <field name="product_id"/>
                                    <field name="description" optional="hide"/>
                                    <field name="note"/>
                                    <field name="price"/>
                                    <field name="qty"/>
                                    <field name="subtotal"/>
                                </tree>
                            </field>
                            <group name="note_group" col="6" class="mt-2 mt-md-0">
                                <group colspan="4">
                                    
                                </group>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                        <label for="amount_total"/>
                                    </div>
                                    <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </group>
                                <div class="oe_clear"/>
                            </group> 
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <record id="pos_online_outlet_order_tree" model="ir.ui.view">
        <field name="name">pos.online.outlet.order.tree</field>
        <field name="model">pos.online.outlet.order</field>
        <field name="arch" type="xml">
            <tree create="false" edit="false" delete="false">
                <field name="order_from"/>
                <field name="order_type" optional="show"/>
                <field name="order_number"/>
                <field name="info" optional="show"/>
                <field name="order_date"/>
                <field name="online_outlet_id"/>
                <field name="payment_type" optional="show"/>
                <field name="amount_total"/>
                <field name="online_state" optional="hide"/>
                <field name="state" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="pos_online_outlet_order_search" model="ir.ui.view">
        <field name="name">pos.online.outlet.order.filter</field>
        <field name="model">pos.online.outlet.order</field>
        <field name="arch" type="xml">
            <search>
                <field name="order_number"/>
                <field name="state"/>
                <field name="online_state"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="pos_online_outlet_order_action">
        <field name="name">Orders</field>
        <field name="res_model">pos.online.outlet.order</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem 
        id="pos_online_outlet_order_menu"
        name="Orders"
        action="pos_online_outlet_order_action"
        parent="pos_online_outlet_menu_root"
        sequence="6"/>

</odoo>
