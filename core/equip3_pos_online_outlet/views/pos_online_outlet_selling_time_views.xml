<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="pos_online_outlet_selling_time_form" model="ir.ui.view">
        <field name="name">pos.online.outlet.selling.time</field>
        <field name="model">pos.online.outlet.selling.time</field>
        <field name="arch" type="xml">
            <form>
                <header></header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="start_time" required="1"/>
                            <field name="end_time" required="1"/>
                        </group>
                    </group>
                    <group string="Service Hours">
                        <group>
                            <field name="monday"/>
                            <field name="monday_start_time" 
                                widget="float_time"
                                attrs="{'invisible': [('monday','!=',True)] }"/>
                            <field name="monday_end_time"  
                                widget="float_time"
                                attrs="{'invisible': [('monday','!=',True)] }"/>

                            <field name="tuesday"/>
                            <field name="tuesday_start_time"  
                                widget="float_time"
                                attrs="{'invisible': [('tuesday','!=',True)] }"/>
                            <field name="tuesday_end_time"  
                                widget="float_time"
                                attrs="{'invisible': [('tuesday','!=',True)] }"/>
                                
                            <field name="wednesday"/>
                            <field name="wednesday_start_time"  
                                widget="float_time"
                                attrs="{'invisible': [('wednesday','!=',True)] }"/>
                            <field name="wednesday_end_time"  
                                widget="float_time"
                                attrs="{'invisible': [('wednesday','!=',True)] }"/>

                            <field name="thursday"/>
                            <field name="thursday_start_time"  
                                widget="float_time"
                                attrs="{'invisible': [('thursday','!=',True)] }"/>
                            <field name="thursday_end_time"  
                                widget="float_time"
                                attrs="{'invisible': [('thursday','!=',True)] }"/>

                            <field name="friday"/>
                            <field name="friday_start_time"  
                                widget="float_time"
                                attrs="{'invisible': [('friday','!=',True)] }"/>
                            <field name="friday_end_time"  
                                widget="float_time"
                                attrs="{'invisible': [('friday','!=',True)] }"/>

                            <field name="saturday"/>
                            <field name="saturday_start_time" 
                                widget="float_time" 
                                attrs="{'invisible': [('saturday','!=',True)] }"/>
                            <field name="saturday_end_time"  
                                widget="float_time"
                                attrs="{'invisible': [('saturday','!=',True)] }"/>

                            <field name="sunday"/>
                            <field name="sunday_start_time"  
                                widget="float_time"
                                attrs="{'invisible': [('sunday','!=',True)] }"/>
                            <field name="sunday_end_time"  
                                widget="float_time"
                                attrs="{'invisible': [('sunday','!=',True)] }"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pos_online_outlet_selling_time_tree" model="ir.ui.view">
        <field name="name">pos.online.outlet.selling.time.tree</field>
        <field name="model">pos.online.outlet.selling.time</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="pos_online_outlet_selling_time_search" model="ir.ui.view">
        <field name="name">pos.online.outlet.selling.time.filter</field>
        <field name="model">pos.online.outlet.selling.time</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="pos_online_outlet_selling_time_action">
        <field name="name">Selling Time</field>
        <field name="res_model">pos.online.outlet.selling.time</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem 
        id="pos_online_outlet_selling_time_menu"
        name="Selling Time"
        action="pos_online_outlet_selling_time_action"
        parent="pos_online_outlet_menu_root"
        groups="equip3_pos_masterdata.group_pos_supervisor,equip3_pos_masterdata.group_pos_manager,equip3_pos_masterdata.group_pos_staff"
        sequence="11"/>

</odoo>
