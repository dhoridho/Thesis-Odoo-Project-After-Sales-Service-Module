<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.form.view.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside"> 
                <page string="Online Outlet">
                    <group name="online_outlet">
                        <group name="online_outlet_1">
                        </group>
                        <group name="online_outlet_2">
                        </group>
                    </group>
                    <group name="online_outlet_product_details">
                        <group>
                            <field name="oloutlet_category_id"/>
                            <field name="oloutlet_description"/>
                            <field name="is_online_outlet" invisible="1"/>
                        </group> 
                    </group>
                    <group>
                        <group string="Selling Time">
                            <field name="is_use_outlet_operational_hours"/>
                            <field name="selling_time_id"
                                attrs="{
                                    'invisible': [('is_use_outlet_operational_hours','=',True)],
                                    'required': [('is_use_outlet_operational_hours','=',False)] }"/> 
                        </group> 
                    </group>
                    <group name="oloutlet_product_option" string="Options">
                        <field name="oloutlet_product_option_ids" nolabel="1">
                            <tree>
                                <field name="oloutlet_product_tmpl_id" invisible="1"/>
                                <field name="sequence" widget="handle"/>
                                <field name="name" required="1"/>
                                <field name="min_selection"/>
                                <field name="product_tmpl_ids" widget="many2many_tags"/>
                            </tree>
                            <form> 
                                <sheet>
                                    <group>
                                        <field name="oloutlet_product_tmpl_id" invisible="1"/>
                                        <field name="name" required="1" placeholder="e.g: Add Topping"/>
                                        <field name="min_selection"/>
                                        <field name="sequence"/>
                                    </group>
                                    <group string="Options">
                                        <field name="product_tmpl_ids" 
                                            nolabel="1"
                                            context="{ 
                                                'default_type': 'product',
                                                'default_available_in_pos': True,
                                                'tree_view_ref': 'equip3_pos_online_outlet.pos_online_outlet_product_template_tree',
                                                'form_view_ref': 'equip3_pos_online_outlet.pos_online_outlet_product_template_form_view'
                                            }"/>
                                    </group>
                                </sheet>
                            </form>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>


    <record id="pos_online_outlet_product_template_tree" model="ir.ui.view">
        <field name="name">pos_online_outlet_product_template_tree</field>
        <field name="priority">5000</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="oloutlet_sequence" widget="handle"/>
                <field name="name" string="Name" required="1"/>
                <field name="list_price" string="Price"/>
                <field name="available_in_pos" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="pos_online_outlet_product_template_form_view" model="ir.ui.view">
        <field name="name">pos_online_outlet_product_template_form_view</field>
        <field name="priority">5000</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <form string="Product">
                <header>
                    <button string="Configure Variants" type="action" name="201" attrs="{'invisible': ['|', ('attribute_line_ids', '&lt;=', 0), ('is_product_variant', '=', True)]}" groups="product.group_product_variant"/>
                </header>
                <sheet>
                    <field name="product_variant_count" invisible="1"/>
                    <field name="is_product_variant" invisible="1"/>
                    <field name="attribute_line_ids" invisible="1"/>
                    <div class="oe_button_box" name="button_box"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <field name="id" invisible="True"/>
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}" invisible="1"/>
                    <div class="oe_title oe_hidden"> 
                        <div name="options" groups="base.group_user" invisible="1">
                            <div>
                                <field name="sale_ok"/>
                                <label for="sale_ok"/>
                            </div>
                            <div>
                                <field name="purchase_ok"/>
                                <label for="purchase_ok"/>
                            </div> 
                        </div>
                    </div>
                    <group>
                        <group>
                            <field name="name" string="Name" required="1"/>
                            <field name="list_price" string="Price"/>
                            <field name="oloutlet_sequence" string="Sequence"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="available_in_pos" invisible="1"/>
                            <field name="categ_id" string="Product Category" options="{'no_create': True}"/>
                        </group>
                    </group>
                    <notebook invisible="1">
                        <page string="General Information" name="general_information">
                            <group>
                                <group name="group_general">
                                    <field name="active" invisible="1"/>
                                    <field name="type" invisible="1"/>
                                </group>
                                <group name="group_standard_price">
                                    <label for="list_price"/>
                                    <div name="pricing">
                                      <field name="list_price" class="oe_inline" widget="monetary" options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                                      <button name="open_pricelist_rules" icon="fa-arrow-right" type="object" groups="product.group_product_pricelist" class="oe_inline" invisible="1">
                                        <field name="pricelist_item_count" attrs="{'invisible': [('pricelist_item_count', '=', 0)]}"/>
                                        <span attrs="{'invisible': [('pricelist_item_count', '=', 1)]}">
                                          Extra Prices
                                        </span>
                                        <span attrs="{'invisible': [('pricelist_item_count', '!=', 1)]}">
                                          Extra Price
                                        </span>
                                      </button>
                                    </div>
                                    <label for="standard_price" groups="base.group_user" attrs="{'invisible': [('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}" invisible="1"/>
                                    <div name="standard_price_uom" groups="base.group_user" attrs="{'invisible': [('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}" class="o_row" invisible="1">
                                        <field name="standard_price" widget="monetary" options="{'currency_field': 'cost_currency_id', 'field_digits': True}"/>
                                        <span groups="uom.group_uom" class="oe_read_only">per
                                            <field name="uom_name"/>
                                        </span>
                                    </div>
                                    <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                                    <field name="uom_id"  invisible="1" groups="uom.group_uom" options="{'no_create': True}"/>
                                    <field name="uom_po_id"  invisible="1" groups="uom.group_uom" options="{'no_create': True}"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="cost_currency_id" invisible="1"/>
                                    <field name="product_variant_id" invisible="1"/>
                                </group>
                            </group>
                            <group string="Internal Notes" invisible="1">
                                <field name="description" nolabel="1" placeholder="This note is only for internal purposes."/>
                            </group>
                        </page> 
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>



    <record id="pos_online_outlet_product_template_action" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.template</field>
        <field name="domain">[('is_online_outlet','=',True)]</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <field name="context">{ 'default_is_online_outlet': True, 'default_available_in_pos': True }</field>
    </record>

    <menuitem id="pos_online_outlet_product_template_menu"
        name="Products"
        action="pos_online_outlet_product_template_action"
        parent="pos_online_outlet_menu_root"
        sequence="5"/>


</odoo>