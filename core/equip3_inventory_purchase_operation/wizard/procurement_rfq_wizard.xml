<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="procurement_rfq_wizard" model="ir.ui.view">
            <field name="name">procurement.rfq.wizard.view.form</field>
            <field name="model">procurement.rfq.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="partner_id" required="1"
                            context="{'res_partner_search_mode': 'supplier', 'show_vat': True, 'default_is_vendor': 1, 'search_default_supplier': 1}"
                            options="{'no_create':True,'no_create_edit':True}" />
                    </group>
                    <footer>
                        <button name="action_confirm"
                            string="Confirm"
                            type="object"
                            class="oe_highlight"
                        />
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>