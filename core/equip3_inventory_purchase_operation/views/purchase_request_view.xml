<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- purchase.request inherit form view -->
        <record id="purchase_request_inventory_control" model="ir.ui.view">
            <field name="name">purchase.request.inherit.view.inventory.control</field>
            <field name="model">purchase.request</field>
            <field name="mode">primary</field>
            <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='description']" position="after">
                    <field name="procurement_planning_id" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']//tree/field[@name='product_id']" position="after">
                    <field name="product_id_domain" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']//tree/field[@name='product_id']" position="attributes">
                    <attribute name="domain">product_id_domain</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>