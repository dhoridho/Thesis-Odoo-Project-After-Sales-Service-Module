<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.actions.act_window" id="stock_allocation_move_action">
            <field name="name">Allocated Moves</field>
            <field name="res_model">stock.allocation.move</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="sub_stock_allocation_move_menu" parent="stock_allocation_menu" name="Allocated Moves" sequence="50" action="stock_allocation_move_action" />
        
        <!-- Tree view for the menuitem -->
        <record id="stock_allocation_move_tree" model="ir.ui.view">
            <field name="name">stock.allocation.move.tree</field>
            <field name="model">stock.allocation.move</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="date"/>
                    <field name="product_id"/>
                    <field name="warehouse_id"/>
                    <field name="sale_channel_id"/>
                    <field name="qty"/>
                </tree>
            </field>
        </record>
        
    </data>
</odoo>