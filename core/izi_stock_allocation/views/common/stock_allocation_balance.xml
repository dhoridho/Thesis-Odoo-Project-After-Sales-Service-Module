<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <menuitem id="stock_allocation_menu" parent="sale.menu_sale_config" name="Stock Allocation" sequence="3"/>

        <record model="ir.actions.act_window" id="stock_allocation_balance_action">
            <field name="name">Stock Allocation Balance</field>
            <field name="res_model">stock.allocation.balance</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="sub_stock_allocation_balance_menu" parent="stock_allocation_menu" name="Stock Allocation Balance" sequence="30" action="stock_allocation_balance_action" />
        
        <!-- Tree view for the menuitem -->
        <record id="stock_allocation_balance_tree" model="ir.ui.view">
            <field name="name">stock.allocation.balance.tree</field>
            <field name="model">stock.allocation.balance</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="date"/>
                    <field name="warehouse_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        
        <!-- Form view for the menuitem -->
        <record id="stock_allocation_balance_form" model="ir.ui.view">
            <field name="name">stock.allocation.balance.form</field>
            <field name="model">stock.allocation.balance</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <!-- <button name="mp_sync_allocation" states="confirm" type="object" string="Sync Marketplace" class="oe_highlight"/> -->
                        <button name="check_balance" states="new,start" type="object" string="Check Balance" class=""/>
                        <button name="start_rebalance" states="new" type="object" string="Start Rebalance" class=""/>
                        <button name="action_confirm" states="start" type="object" string="Confirm" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="new,start,confirm"/>
                    </header>
                    <sheet>
                        <!-- <div class="oe_button_box" name="button_box">
                            <button type="object"
                                name="action_view_record"
                                class="oe_stat_button"
                                icon="fa-edit"
                                attrs="{'invisible': [('record_count', '=', 0)]}" groups="base.group_user">
                                <field name="record_count" widget="statinfo" string="Record"/>
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/> -->
                        <div name="title" class="oe_left">
                            <label class="oe_edit_only" for="date" string="Date"/>
                            <h1><field name="date" class="oe_title" placeholder="Date" height="20px" attrs="{'readonly': [('state', '!=', 'new')]}"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="method" attrs="{'readonly': [('state', '!=', 'new')]}" required="1"/>
                                <field name="warehouse_id" attrs="{'readonly': [('state', '!=', 'new')]}" required="1"/>
                                <field name="location_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="all"/>
                                <field name="sync"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Balance">
                                <field name="line_ids" attrs="{'readonly': [('state', '=', 'confirm')]}">
                                    <tree editable="bottom">
                                        <field name="product_id" required="1"/>
                                        <field name="sale_channel_id" required="1"/>
                                        <field name="qty" readonly="1"/>
                                        <field name="add_qty"/>
                                        <field name="end_qty"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Summary">
                                <field name="stock_line_ids" readonly="1">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="total_stock"/>
                                        <field name="allocated"/>
                                        <field name="unallocated"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Moves">
                                <field name="adjustment_move_ids" readonly="1">
                                    <tree>
                                        <field name="product_id"/>
                                        <field name="sale_channel_id"/>
                                        <field name="qty"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>