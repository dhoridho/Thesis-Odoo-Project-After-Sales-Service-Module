<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Wizard -->
        <record id="stock_allocation_wizard" model="ir.ui.view" >
            <field name="name">stock.allocation.wizard</field>
            <field name="model">stock.allocation.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <div style="white-space: pre-line;">
                        <h5>Select warehouse to get the stock allocation.</h5>
                    </div>
                    <group>
                        <group>
                            <field name="warehouse_id" options="{'no_create': True, 'no_create_edit':True}"/>
                        </group>
                        <group>
                            <field name="product_ids" options="{'no_create': True, 'no_create_edit':True}" widget="many2many_tags"/>
                        </group>
                    </group>
                    <footer>
                        <button type="object" name="submit" string="Submit" class="oe_highlight"/>
                        or
                        <button string="Cancel" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <act_window
            id="action_stock_allocation_wizard"
            name="Stock Allocation"
            res_model="stock.allocation.wizard"
            view_mode="form"
            target="new"
        />

        <menuitem id="sub_stock_allocation_balance_current_menu" parent="stock_allocation_menu" name="Stock Allocation" sequence="10" action="action_stock_allocation_wizard" />
        
        <!-- Balance Current -->
        <record model="ir.actions.act_window" id="stock_allocation_balance_current_action">
            <field name="name">Stock Allocation</field>
            <field name="res_model">stock.allocation.balance.current</field>
            <field name="view_mode">pivot,tree</field>
        </record>

        <record id="stock_allocation_balance_current_pivot" model="ir.ui.view">
            <field name="name">stock.allocation.balance.current.pivot</field>
            <field name="model">stock.allocation.balance.current</field>
            <field name="arch" type="xml">
                <pivot string="Current Balance" sample="1">
                    <field name="product_id" type="row"/>
                    <field name="channel_name" type="col"/>
                    <field name="qty" type="measure"/>
                </pivot>
            </field>
        </record>
        
        <record id="stock_allocation_balance_current_search" model="ir.ui.view">
            <field name="name">stock.allocation.balance.current.search</field>
            <field name="model">stock.allocation.balance.current</field>
            <field eval="10" name="priority"/>
            <field name="arch" type="xml">
                <search string="Allocation">
                    <field name="product_id" string="Product"/>
                </search>
            </field>
        </record>
        
        <!-- Tree view for the menuitem -->
        <record id="stock_allocation_balance_current_tree" model="ir.ui.view">
            <field name="name">stock.allocation.balance.current.tree</field>
            <field name="model">stock.allocation.balance.current</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="product_id"/>
                    <field name="channel_name"/>
                    <field name="qty"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>