<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <menuitem id="sale_channel" name="Sale Channel"
                    parent="stock_allocation_menu" action="izi_sale_channel.action_window_sale_channel"
                    sequence="100" groups="base.group_user" />
        <record model="ir.ui.view" id="form_sale_channel">
            <field name="name">sale.channel.form</field>
            <field name="model">sale.channel</field>
            <field name="inherit_id" ref="izi_sale_channel.form_sale_channel"/>
            <field name="arch" type="xml">
                <xpath expr="//group" position="after">
                    <group string="Stock Allocation">
                        <group>
                            <field name="platform"/>
                            <field name="mp_account_id" attrs="{'invisible': [('platform', '!=', 'mp')]}"/>
                            <field name="outlet_id" attrs="{'invisible': [('platform', '!=', 'pos_bh')]}"/>
                            <field name="allocate_on"/>
                            <field name="check_allocation"/>
                            <field name="picking_type_id" attrs="{'invisible': [('allocate_on', '!=', 'picking')]}"/>
                        </group>
                        <group>
                            <field name="allocation_percentage"/>
                            <field name="total_allocation_percentage"/>
                            <field name="allocation_safety"/>
                        </group>
                    </group>
                    <button name="raise_get_last_child_channels" string="Get Child Channels" type="object" class="btn-link mb-1 px-0" icon="fa-info"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
