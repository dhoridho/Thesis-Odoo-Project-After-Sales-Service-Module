<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- maintenance team -->
    <record id="aftersale_maintenance_team_search_view" model="ir.ui.view">
        <field name="name">aftersale.maintenance.team.search.view</field>
        <field name="model">aftersale.maintenance.team</field>
        <field name="arch" type="xml">
            <search string="Maintenance Team">
                <field name="name" string="Maintenance Team" filter_domain="[('name', 'ilike', self)]"/>
            </search>
        </field>
    </record>

    <record id="aftersale_maintenance_team_tree_view" model="ir.ui.view">
        <field name="name">aftersale.maintenance.team.tree.view</field>
        <field name="model">aftersale.maintenance.team</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree string="Maintenance Team">
                <field name="name"/>
                <field name="leader_id"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="aftersale_maintenance_team_form_view" model="ir.ui.view">
        <field name="name">aftersale.maintenance.team.form</field>
        <field name="model">aftersale.maintenance.team</field>
        <field name="arch" type="xml">
            <form string="Maintenance Team">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="leader_id"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_aftersale_maintenance_team" model="ir.actions.act_window">
        <field name="name">Maintenance Team</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">aftersale.maintenance.team</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="aftersale_maintenance_team_search_view"/>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Maintenance Team
            </p>
        </field>
    </record>

<!-- facility area -->
    <record id="aftersale_facility_area_search_view" model="ir.ui.view">
        <field name="name">aftersale.facility.area.search.view</field>
        <field name="model">aftersale.facility.area</field>
        <field name="arch" type="xml">
            <search string="Faciltiy Area">
                <field name="name" string="Faciltiy Area" filter_domain="[('name', 'ilike', self)]"/>
            </search>
        </field>
    </record>

    <record id="aftersale_facility_area_tree_view" model="ir.ui.view">
        <field name="name">aftersale.facility.area.tree.view</field>
        <field name="model">aftersale.facility.area</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree string="Faciltiy Area">
                <field name="name"/>
                <field name="parent_id"/>
                <field name="company_id"/>
                <field name="branch_id"/>
                <field name="location_id" domain="[('usage', '=', 'internal'), ('branch_id', '=', branch_id)]" required="1"/>
            </tree>
        </field>
    </record>

        <record id="aftersale_facility_area_form_view" model="ir.ui.view">
        <field name="name">aftersale.facility.area.form</field>
        <field name="model">aftersale.facility.area</field>
        <field name="arch" type="xml">
            <form string="Faciltiy Area">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="parent_id"/>
                            <field name="note"/>
                        </group>
                        <group>
                            <field name="company_id" readonly="1"/>
                            <field name="branch_id"/>
                            <field name="location_id" domain="[('usage', '=', 'internal'), ('branch_id', '=', branch_id)]" required="1"/>
                         </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_aftersale_facility_area" model="ir.actions.act_window">
        <field name="name">Faciltiy Area</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">aftersale.facility.area</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="aftersale_facility_area_search_view"/>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Faciltiy Area
            </p>
        </field>
    </record>

    <menuitem
        id="menu_aftersales_root" name="After Sales" web_icon="equip3_aftersales_masterdata,static/description/aftersales.png" sequence="8">
            <menuitem id="menu_aftersale_menu_master" name="Master Data" sequence="2" groups="equip3_aftersales_accessright.group_aftersales_administration">
                    <menuitem id="menu_aftesale_master_maintenance_team" name="Maintenance Team" action="equip3_aftersales_masterdata.action_aftersale_maintenance_team" sequence="2"/>
                    <menuitem id="menu_aftesale_master_facility_area" name="Facilty Area" action="equip3_aftersales_masterdata.action_aftersale_facility_area" sequence="3"/>
            </menuitem>
    </menuitem>
    <record id="equip3_aftersales_masterdata.menu_aftersales_root" model="ir.ui.menu">
        <field name="equip_category_id" ref="equip3_hashmicro_ui.category_sales"/>
    </record>

</odoo>
