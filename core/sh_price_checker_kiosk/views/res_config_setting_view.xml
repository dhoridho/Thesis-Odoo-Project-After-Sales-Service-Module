<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="price_checker_config_setting_form_view" model="ir.ui.view">
			<field name="name">price.checker.config.setting.form.view</field>
			<field name="model">res.config.settings</field>
        	<field name="priority" eval="11"/>
        	<field name="inherit_id" ref="base.res_config_settings_view_form"/>
        	<field name="arch" type="xml">
        		<xpath expr="//div[hasclass('settings')]" position="inside">
                	<div class="app_settings_block" data-string="Price Checker" string="Price Checker" data-key="sh_price_checker_kiosk" groups="sh_price_checker_kiosk.price_checker_group">
                		<h2>Price Checker Configuration</h2>
                		<div class="row mt16 o_settings_container">
                			<div class="col-12 col-lg-6 o_setting_box">
	                            <div class="o_setting_left_pane">
	                                <field name="sh_product_image"/>
	                            </div>
	                            <div class="o_setting_right_pane">
	                                <label for="sh_product_image"/>
	                            </div>
	                        </div>
	                        <div class="col-12 col-lg-6 o_setting_box">
	                        	<field name="company_id" invisible="1"/>
	                            <div class="o_setting_left_pane">
	                                <field name="sh_product_code"/>
	                            </div>
	                            <div class="o_setting_right_pane">
	                                <label for="sh_product_code"/>
	                            </div>
	                        </div>
	                        <div class="col-12 col-lg-6 o_setting_box">
	                            <div class="o_setting_left_pane">
	                                <field name="sh_product_barcode"/>
	                            </div>
	                            <div class="o_setting_right_pane">
	                                <label for="sh_product_barcode"/>
	                            </div>
	                        </div>
	                        <div class="col-12 col-lg-6 o_setting_box">
	                            <div class="o_setting_left_pane">
	                                <field name="sh_product_sale_price"/>
	                            </div>
	                            <div class="o_setting_right_pane">
	                                <label for="sh_product_sale_price"/>
	                            </div>
	                        </div>
	                        <div class="col-12 col-lg-6 o_setting_box">
	                            <div class="o_setting_left_pane">
	                                <field name="sh_product_sale_description"/>
	                            </div>
	                            <div class="o_setting_right_pane">
	                                <label for="sh_product_sale_description"/>
	                            </div>
	                        </div>
	                        <div class="col-12 col-lg-6 o_setting_box">
	                            <div class="o_setting_left_pane">
	                                <field name="sh_product_stock"/>
	                            </div>
	                            <div class="o_setting_right_pane">
	                                <label for="sh_product_stock"/>
	                            </div>
	                        </div>
	                        <div class="col-12 col-lg-6 o_setting_box">
	                            <div class="o_setting_left_pane">
	                                <field name="sh_product_attribute"/>
	                            </div>
	                            <div class="o_setting_right_pane">
	                                <label for="sh_product_attribute"/>
	                            </div>
	                        </div>
	                        <div class="col-12 col-lg-6 o_setting_box">
	                            <div class="o_setting_left_pane">
	                                <field name="sh_product_category"/>
	                            </div>
	                            <div class="o_setting_right_pane">
	                                <label for="sh_product_category"/>
	                            </div>
	                        </div>
	                        <div class="col-12 col-lg-6 o_setting_box">
	                            <div class="o_setting_left_pane">
	                                <field name="sh_touch_kyboard"/>
	                            </div>
	                            <div class="o_setting_right_pane">
	                                <label for="sh_touch_kyboard"/>
	                            </div>
	                        </div>
	                        <div class="col-12 col-lg-6 o_setting_box">
	                            <div class="o_setting_left_pane">
	                                <field name="sh_company_logo"/>
	                            </div>
	                            <div class="o_setting_right_pane">
	                                <label for="sh_company_logo"/>
	                            </div>
	                        </div>
	                        <div class="col-12 col-lg-6 o_setting_box">
	                            <div class="o_setting_left_pane">
	                                <field name="sh_welcome_message" />
	                            </div>
	                            <div class="o_setting_right_pane">
	                                <label for="sh_welcome_message" />
	                            </div>
	                        </div>
	                        <div class="col-12 o_setting_box" attrs="{'invisible':[('sh_welcome_message','=',False)]}">
	                            <div class="o_setting_right_pane">
	                                <label for="sh_message" />
	                                <br />
	                                <field name="sh_message" attrs="{'required':[('sh_welcome_message','=',True)]}" />
	                                <br />
	                            </div>
	                            <div class="o_setting_left_pane"></div>
	                        </div>
                     	</div>
                     	<div class="row mt16 o_settings_container">
                     		<div class="col-12 col-lg-6 o_setting_box">
	                            <div class="o_setting_left_pane">
	                                <field name="sh_display"/>
	                            </div>
	                            <div class="o_setting_right_pane">
	                                <label for="sh_display"/>
	                            </div>
	                        </div>
	                        <div class="col-12 o_setting_box" attrs="{'invisible':[('sh_display','=',False)]}">
	                            <div class="o_setting_right_pane">
	                                <label for="sh_display_view" />
	                                <br />
	                                <field name="sh_display_view" attrs="{'required':[('sh_display','=',True)]}" />
	                                <br />
	                            </div>
	                            <div class="o_setting_left_pane"></div>
	                        </div>
	                        <div class="col-12 o_setting_box" attrs="{'invisible':['|',('sh_display_view','=',False),('sh_display_view','=','portrait')]}">
	                            <div class="o_setting_right_pane">
	                                <label for="sh_display_landscape" />
	                                <br />
	                                <field name="sh_display_landscape" attrs="{'required':[('sh_display_view','=','landscape')]}" />
	                                <br />
	                            </div>
	                            <div class="o_setting_left_pane"></div>
	                        </div>
	                        <div class="col-12 o_setting_box" attrs="{'invisible':['|',('sh_display_view','=',False),('sh_display_view','=','landscape')]}">
	                            <div class="o_setting_right_pane">
	                                <label for="sh_display_portrait" />
	                                <br />
	                                <field name="sh_display_portrait" attrs="{'required':[('sh_display_view','=','portrait')]}" />
	                                <br />
	                            </div>
	                            <div class="o_setting_left_pane"></div>
	                        </div>
	                        <div class="col-6 o_setting_box">
	                            <div class="o_setting_right_pane">
	                            	<label for="sh_delay_screen"/>
	                            	<br/>
	                            	<field name="sh_delay_screen" class="oe_inline"/>
	                            </div>
	                            <div class="o_setting_left_pane">
	                            	
	                            </div>
	                        </div>
                     	</div>
                	</div>
                </xpath>
        	</field>
		</record>
		<record id="action_price_checker_config_settings" model="ir.actions.act_window">
	        <field name="name">Price Checker Settings</field>
	        <field name="type">ir.actions.act_window</field>
	        <field name="res_model">res.config.settings</field>
	        <field name="view_id" ref="price_checker_config_setting_form_view"/>
	        <field name="view_mode">form</field>
	        <field name="target">inline</field>
	        <field name="context">{'module' : 'sh_price_checker_kiosk'}</field>
    	</record>
    	<menuitem id="price_checker_main_menu" name="Price Checker"/>
		<menuitem id="menu_config" name="Configuration" parent="price_checker_main_menu" sequence="1" groups="sh_price_checker_kiosk.price_checker_group"/>
	    <menuitem id="menu_price_checker_general_settings"
	        name="Settings"
	        parent="menu_config"
	        sequence="0"
	        action="action_price_checker_config_settings"
	        groups="base.group_system"
        	/>
	</data>
</odoo>