<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mass_update_fixed_form_view" model="ir.ui.view">
        <field name="name">mass.update.fixed.form.view</field>
        <field name="model">mass.update.fixed</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="hour_from" widget="float_time"/>
                        <field name="hour_to" widget="float_time"/>
                        <field name="grace_time_for_late" widget="float_time"/>
                    </group>
                    <group>
                        <field name="break_from" widget="float_time"/>
                        <field name="break_to" widget="float_time"/>
                        <field name="half_day" invisible="1"/>
                        <field name="minimum_hours" widget="float_time" required="1"/>
                    </group>
                </group>
                <footer>
                    <button string="Update" name="update_mass_fixed" type="object"
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_mass_update_fixed" model="ir.actions.act_window">
        <field name="name">Mass Update Fixed</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mass.update.fixed</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="mass_update_fixed_form_view"/>
        <field name="target">new</field>
    </record>

</odoo>


