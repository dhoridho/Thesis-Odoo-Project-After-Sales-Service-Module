<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_shift_variation_form" model="ir.ui.view">
            <field name="name">hr.shift.variation.form</field>
            <field name="model">hr.shift.variation</field>
            <field name="arch" type="xml">
                <form string="Shift Variations">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" required="1"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="shift_code" required="1"/>
                                <field name="day_type" widget="radio" options="{'horizontal':true}" nolable="1"/>
                                <field name="attendance_formula_id" options="{'no_create': True,'no_create_edit': True}" attrs="{'invisible':[('day_type','=','day_off')]}"/>
                                <field name="work_from" widget="float_time" attrs="{'invisible':[('day_type','=','day_off')]}"/>
                                <field name="work_to" widget="float_time" attrs="{'invisible':[('day_type','=','day_off')]}"/>
                                <field name="tolerance_for_late" widget="float_time" attrs="{'invisible':[('day_type','=','day_off')]}"/>
                                <field name="break_from" widget="float_time" attrs="{'invisible':[('day_type','=','day_off')]}"/>
                                <field name="break_to" widget="float_time" attrs="{'invisible':[('day_type','=','day_off')]}"/>
                                <field name="minimum_hours" widget="float_time" attrs="{'invisible':[('day_type','=','day_off')]}"/>
                                <field name="start_checkin" widget="float_time" attrs="{'invisible':[('day_type','=','day_off')]}"/>
                                <field name="end_checkout" widget="float_time" attrs="{'invisible':[('day_type','=','day_off')]}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_shift_variation_tree" model="ir.ui.view">
            <field name="name">hr.shift.variation.tree</field>
            <field name="model">hr.shift.variation</field>
            <field name="arch" type="xml">
                <tree string="Shift Variations">
                    <field name="name"/>
                    <field name="day_type"/>
                    <field name="work_from" widget="float_time"/>
                    <field name="work_to" widget="float_time"/>
                    <field name="tolerance_for_late" widget="float_time"/>
                    <field name="attendance_formula_id"/>
                    <field name="minimum_hours" widget="float_time"/>
                </tree>
            </field>
        </record>

        <record id="hr_shift_variation_act_window" model="ir.actions.act_window">
            <field name="name">Shift Variations</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.shift.variation</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new record.
                </p>
            </field>
        </record>

        <menuitem name="Shift Variations" id="menu_hr_shift_variation"
                  parent="hr_attendance.menu_hr_attendance_settings"
                  action="hr_shift_variation_act_window"
                  sequence="2"
                  />
    </data>
</odoo>
