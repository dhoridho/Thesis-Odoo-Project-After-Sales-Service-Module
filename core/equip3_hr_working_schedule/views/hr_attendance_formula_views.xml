<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_attendance_formula_form" model="ir.ui.view">
            <field name="name">hr.attendance.formula.form</field>
            <field name="model">hr.attendance.formula</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" required="1"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="formula"/>
                                <field name="alw_formula"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_attendance_formula_tree" model="ir.ui.view">
            <field name="name">hr.attendance.formula.tree</field>
            <field name="model">hr.attendance.formula</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="formula"/>
                    <field name="alw_formula"/>
                </tree>
            </field>
        </record>

        <record id="hr_attendance_formula_act_window" model="ir.actions.act_window">
            <field name="name">Attendance Formula</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.attendance.formula</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples. click here to add new record.
                </p>
            </field>
        </record>

        <menuitem name="Attendance Formula" id="menu_hr_attendance_formula"
                  parent="hr_attendance.menu_hr_attendance_settings"
                  action="hr_attendance_formula_act_window"
                  sequence="3"
                  />
    </data>
</odoo>
