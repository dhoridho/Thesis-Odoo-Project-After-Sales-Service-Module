<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_payment_report_pivot" model="ir.ui.view">
        <field name="name">pos.payment.report.pivot</field>
        <field name="model">pos.payment.report</field>
        <field name="arch" type="xml">
            <pivot string="Payment Report" disable_linking="True" sample="1">
                <field name="payment_method_id" type="row"/>
                <field name="date" interval="year" type="col"/>
                <field name="order_id" type="measure"/>
                <field name="amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="view_pos_payment_report_graph" model="ir.ui.view">
        <field name="name">pos.payment.report.graph</field>
        <field name="model">pos.payment.report</field>
        <field name="arch" type="xml">
            <graph string="Payment Report" sample="1" disable_linking="1">
                <field name="payment_method_id" type="row"/>
                <field name="amount" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="view_pos_payment_report_tree" model="ir.ui.view">
        <field name="name">pos.payment.report.tree</field>
        <field name="model">pos.payment.report</field>
        <field name="arch" type="xml">
            <tree string="Payment Report" create="0" edit="0" delete="0">
                <field name="date"/>
                <field name="payment_date" />
                <field name="order_id"/>
                <field name="payment_method_id"/>
                <field name="config_id" />
                <field name="session_id" />
                <field name="company_id" />
                <field name="pos_branch_id"  />
                <field name="partner_id" />
                <field name="currency_id" />
                <field name="amount"/>
            </tree>
        </field>
    </record>

    <record id="view_pos_payment_report_search" model="ir.ui.view">
        <field name="name">pos.payment.report.search</field>
        <field name="model">pos.payment.report</field>
        <field name="arch" type="xml">
            <search string="Payment Report">
                <field name="date"/>
                <separator/>
                <separator/>

                <filter name="filter_date" date="date"/>
                <filter string="This Day" name="this_day" domain="[
                    ('date','&lt;',time.strftime('%%Y-%%m-%%d 23:59:59')),
                    ('date','&gt;=',(datetime.date.today()-datetime.timedelta(hours=24)).strftime('%%Y-%%m-%%d 00:00:00'))]"/>
                <filter string="This Month" name="this_month" domain="[
                    ('date', '&lt;', (context_today()+relativedelta(months=1)).strftime('%%Y-%%m-01')), 
                    ('date', '&gt;=', time.strftime('%%Y-%%m-01'))]"/>

                <field name="payment_method_id"/>
                <field name="config_id"/>
                <field name="partner_id"/>
                <field name="session_id"/>
                <group expand="1" string="Group By">
                    <filter string="Payment Method" name="Customer" context="{'group_by':'payment_method_id'}"/>
                    <filter string="Customer" name="Customer" context="{'group_by':'partner_id'}"/>
                    <filter string="Point of Sale" name="pos" context="{'group_by':'config_id'}"/>
                    <filter string="Session" name="session" context="{'group_by':'session_id'}"/>
                    <separator/>
                    <filter string="Order Date" name="order_month" context="{'group_by':'date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_pos_payment_report" model="ir.actions.act_window">
        <field name="name">Payment Report</field>
        <field name="res_model">pos.payment.report</field>
        <field name="view_mode">tree,graph,pivot</field>
        <field name="context">{'search_default_this_month':1}</field>
    </record>

    <menuitem id="menu_pos_payment_report_all" 
        name="Payment Report"
        action="action_pos_payment_report"
        parent="point_of_sale.menu_point_rep" 
        sequence="5"/>
</odoo>
