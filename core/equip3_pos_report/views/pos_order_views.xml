<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="pos_date">
        <field name="name">pos.order.view.date.form</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="location_id"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="inherit_view_pos_order_tree_all_sales_lines">
        <field name="name">pos.order.view.date.form</field>
        <field name="model">pos.order.line</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_tree_all_sales_lines"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='create_date']" position="before">
                <field name="user_id"/>
            </xpath>
            <xpath expr="//tree" position="attributes">
                <attribute name="default_order">create_date desc</attribute>
            </xpath>
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="zone_id"/>
            </xpath>
        </field>
    </record>

    <record id="pos_order_line_pivot_view" model="ir.ui.view">
        <field name="name">pos_order_line_pivot_view</field>
        <field name="model">pos.order.line</field>
        <field name="arch" type="xml">
            <pivot string="POS Order Line" js_class="pivot_view_eq_pos_report">
                <field name="product_id" type="row"/>
                <field name="create_date" interval="month" type="col"/>
                <field name="zone_id" type="measure"/>
                <field name="qty" type="measure"/>
            </pivot>
        </field>
    </record>


    <record id="pos_order_line_graph_view" model="ir.ui.view">
        <field name="name">pos_order_line_graph_view</field>
        <field name="model">pos.order.line</field>
        <field name="arch" type="xml">
            <graph type="bar" stacked="True">
                <field name="create_date" interval="month" type="row"/>
                <field name="product_id" type="row"/>
                <field name="qty" type="measure"/>

            </graph>
        </field>
    </record>

    <record id="action_pos_order_line_detail_report" model="ir.actions.act_window">
        <field name="name">POS Detail Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pos.order.line</field>
        <field name="view_mode">tree,pivot,graph</field>
        <field name="context">{'pos_detail_report':1}</field>
    </record>

    <menuitem id="menu_pos_order_line_detail_report" 
        name="POS Detail Report" 
        groups="equip3_pos_masterdata.group_pos_user"
        action="action_pos_order_line_detail_report" 
        parent="point_of_sale.menu_point_rep" sequence="0"/>

</odoo>