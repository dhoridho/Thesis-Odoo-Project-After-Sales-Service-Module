<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="pos_cashier_history_tree_view" model="ir.ui.view">
        <field name="name">pos.cashier.history.tree.view</field>
        <field name="model">pos.login.history</field>
        <field name="arch" type="xml">
            <tree string="Cashier Change Report" create="0" edit="0" delete="0" >
                <field name="pos_config_id" string="Store Name"/>
                <field name="user_id"/>
                <field name="pos_branch_id" optional="hide"/>
                <field name="checkin_datetime"/>
                <field name="checkout_datetime"/>
            </tree>
        </field>
    </record>

    <record id="pos_login_history_filter" model="ir.ui.view">
        <field name="name">pos.login.history.filter</field>
        <field name="model">pos.login.history</field>
        <field name="arch" type="xml">
            <search string="Search POS Cashier Change Report">
                <field name="user_id"/>
                <field name="pos_config_id" string="Store Name"/>
                <field name="pos_branch_id"/>
                
                <group expand="0" string="Group By">
                    <filter string="Cashier" name="groupby_user_id" domain="[]" context="{'group_by': 'user_id'}"/>
                    <filter string="Branch" name="groupby_pos_branch_id" domain="[]" context="{'group_by': 'pos_branch_id'}"/>
                    <filter string="Store Name" name="groupby_pos_config_id" domain="[]" context="{'group_by': 'pos_config_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="pos_cashier_history_form_view" model="ir.ui.view">
        <field name="name">pos_cashier_history_form_view</field>
        <field name="model">pos.login.history</field>
        <field name="arch" type="xml">
            <form string="Cashier Change Report">
                <group>
                    <field name="user_id"/>
                    <field name="pos_config_id" string="Store Name"/>
                    <field name="pos_branch_id" invisible="1"/>
                    <field name="checkin_datetime"/>
                    <field name="checkout_datetime"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_pos_cashier_change_history" model="ir.actions.act_window">
        <field name="name">Cashier Change Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pos.login.history</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_groupby_pos_branch_id': 1, 'search_default_groupby_pos_config_id': 1}</field>
        <field name="target">current</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create"></p>
            <p></p>
        </field>
    </record>

    <menuitem id="menu_cashier_change_history" 
    	name="Cashier Change Report" 
        groups="equip3_pos_masterdata.group_pos_supervisor,equip3_pos_masterdata.group_pos_manager"
    	action="action_pos_cashier_change_history" 
    	parent="menu_report_parent" sequence="8"/>

</odoo>