            <field name="tag">tag_analytic_pos_dashboard</field>
        </record>


        <record id="ir_actions_server_analytic_pos_dashboard" model="ir.actions.server">
            <field name="name">Analytic Dashboard</field>
            <field name="model_id" ref="point_of_sale.model_pos_config"/>
