            groups="equip3_pos_masterdata.group_pos_manager,equip3_pos_masterdata.group_pos_supervisor"
            sequence="1"/>

        <record id="equip3_pos_report.menu_analytic_pos_dashboard" model="ir.ui.menu">
            <field name="equip_icon_class">o-hm-sidebar-main-pos-dashboard</field> 
