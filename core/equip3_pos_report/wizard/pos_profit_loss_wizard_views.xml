<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="action_profit_loss_report" model="ir.actions.report">
            <field name="name">Profit-Loss Report</field>
            <field name="model">pos.profit.loss.wizard</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">equip3_pos_report.report_profit_loss</field>
            <field name="report_file">equip3_pos_report.report_profit_loss</field>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="equip3_pos_report.pos_profit_paper_format"/>
        </record>


		<record id="view_pos_profit_loss_wizard" model="ir.ui.view">
			<field name="name">pos.profit.loss.wizard.form</field>
			<field name="model">pos.profit.loss.wizard</field>
			<field name="arch" type="xml">
				<form string="Sales Summary">
					<group>
						<group>
							<field name="start_dt"/>
							<field name="end_dt"/>						
						</group>					
					</group>
					<group>
						<group>
							<field name="pos_branch_id" required='1'/>
						</group>				
					</group>
					<footer>
						<button name="pos_profit_loss_report" string="Print" type="object" class="btn-primary"/>
						<button string="Cancel" class="btn-default" special="cancel" />
					</footer>
				</form>
			</field>
		</record>  
		<record id="action_report_profit_loss" model="ir.actions.act_window">
			<field name="name">Profit-Loss Report</field>
			<field name="res_model">pos.profit.loss.wizard</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>
		<menuitem id="menu_report_parent"
			name="Other Reports"
			parent="point_of_sale.menu_point_root"
			sequence="20"/>	

		<record id="action_view_pos_profit_and_loss" model="ir.actions.act_window">
        <field name="name">Profit and Loss</field>
        <field name="res_model">pos.profit.and.loss</field>
        <field name="view_mode">tree,pivot</field>
        <field name="target">current</field>
        <field name="context">{'search_default_this_month':1}</field>
    	</record>
		
		<!-- <menuitem id="menu_profit_loss_report" name="Profit-Loss Report Wizard" action="action_report_profit_loss" parent="menu_report_parent" sequence="6"/> -->
		<menuitem id="menu_profit_loss_report_wizard" name="Profit-Loss Report" action="action_view_pos_profit_and_loss" parent="menu_report_parent" sequence="5" groups="equip3_pos_masterdata.group_pos_supervisor,equip3_pos_masterdata.group_pos_manager"/>
	</data>
	
</odoo>

