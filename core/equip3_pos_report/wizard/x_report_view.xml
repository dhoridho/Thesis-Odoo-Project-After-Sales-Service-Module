<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		
		<record id="view_pos_x_report_wizard" model="ir.ui.view">
			<field name="name">x.report.wizard.form</field>
			<field name="model">x.report.wizard</field>
			<field name="arch" type="xml">
				<form string="Ongoing Session Report">
					<group>
						<field name="company_id" />
						<field name="branch_id" />
						<field name="pos_session_ids" widget="many2many_tags" domain="[('company_id','=',company_id),('pos_branch_id','=',branch_id)]"/>
					</group>
					<group>
						<field name="report_type" />
					</group>
					<footer>
						<button name="generate_x_report" string="Print" type="object" class="btn-primary"/>
						<button string="Cancel" class="btn-default" special="cancel" />
					</footer>
				</form>
			</field>
		</record>  

		<record id="action_x_report" model="ir.actions.act_window">
			<field name="name">Ongoing Session Report</field>
			<field name="res_model">x.report.wizard</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<record id="action_x_report_print" model="ir.actions.report">
            <field name="name">Ongoing Session Report</field>
            <field name="model">x.report.wizard</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">equip3_pos_report.report_open_session</field>
            <field name="report_file">equip3_pos_report.report_open_session</field>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="equip3_pos_report.pos_paper_format"/>
        </record>

		<menuitem id="x_report" name="Ongoing Session Report" action="action_x_report" parent="menu_report_parent" sequence="2" groups="equip3_pos_masterdata.group_pos_supervisor,equip3_pos_masterdata.group_pos_manager"/>

	</data>
</odoo>

