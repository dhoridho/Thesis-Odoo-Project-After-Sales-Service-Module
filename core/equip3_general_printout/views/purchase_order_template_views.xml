<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_order_template_form" model="ir.ui.view">
        <field name="name">purchase.order.template.form</field>
        <field name="model">purchase.order.template</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="purchase_order_header_ids" widget="many2many_tags"/>
                        <field name="orientation"/>
                    </group>
                    <group>
                        <field name="purchase_order_table_ids" widget="many2many_tags"/>
                        <field name="purchase_order_footer_ids" widget="many2many_tags"/>
                        <field name="paper_size_format"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="view_purchase_order_template_tree" model="ir.ui.view">
        <field name="name">purchase.order.template.tree</field>
        <field name="model">purchase.order.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_purchase_order_template" model="ir.actions.act_window">
      <field name="name">Custom Printout Template</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">purchase.order.template</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Custom Printout Template"
              id="menu_custom_printout_template"
              parent="base.reporting_menuitem"
              action="action_purchase_order_template"
              sequence="10"/>
    
    <function model="purchase.order.template" name="_create_default_template_rfq_and_po"/>
</odoo>