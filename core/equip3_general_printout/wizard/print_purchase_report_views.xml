<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_print_purchase_report_form" model="ir.ui.view">
        <field name="name">print.purchase.report.form</field>
        <field name="model">print.purchase.report</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="select_report" widget="radio" invisible="1"/>
                        <field name="select_report_rfq" widget="radio" attrs="{'invisible': [('state', 'in', ('purchase', 'done'))]}"/>
                        <field name="select_report_po" widget="radio" attrs="{'invisible': [('state', 'not in', ('purchase', 'done'))]}"/>
                        <field name="purchase_order_id" invisible="1"/>
                        <field name="state" invisible="1"/>
                    </group>
                </group>
                <footer>
                    <button name="action_print" type="object" string="Print" class="oe_highlight"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>