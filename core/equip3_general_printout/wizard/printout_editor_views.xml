<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="printout_editor_wizard_form" model="ir.ui.view">
        <field name="name">printout.editor.wizard.form</field>
        <field name="model">printout.editor</field>
        <field name="arch" type="xml">
            <form>
                <notebook>
                    <page string="Header">
                        <group>
                            <field name="name" invisible="1"/>
                            <group string="Selected Fields:">
                                <field name="purchase_order_header_ids" nolabel="1" options="{'no_create': True}" force_save="1" widget="many2many_checkboxes">
                                </field>
                            </group>
                            <group string="Field Filter:">
                                <field name="po_header_filter_ids" nolabel="1" force_save="1">
                                    <tree create="0" edit="0" delete="0" class="report_header_print_filter">
                                        <field name="sequence" widget="handle"/>
                                        <field name="field_id" force_save="1" invisible="1"/>
                                        <field name="field_description" nolabel="1" readonly="1"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </page>
                    <page string="Table">
                        <group>
                            <group string="Selected Fields:">
                                <field name="purchase_order_table_ids" nolabel="1" widget="many2many_checkboxes">
                                </field>
                            </group>
                            <group string="Field Filter:">
                                <field name="purchase_order_table_filter_ids" nolabel="1" force_save="1">
                                    <tree create="0" edit="0" delete="0" class="report_header_print_filter">
                                        <field name="sequence" widget="handle"/>
                                        <field name="field_id" invisible="1" force_save="1"/>
                                        <field name="field_description" nolabel="1" readonly="1"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </page>

                    <page string="Footer">
                        <group>
                            <group string="Selected Fields:">
                                <field name="purchase_order_footer_ids" nolabel="1" widget="many2many_checkboxes">
                                </field>
                            </group>
                            <group string="Field Filter:">
                                <field name="purchase_order_footer_filter_ids" nolabel="1" force_save="1">
                                    <tree create="0" edit="0" delete="0" class="report_header_print_filter">
                                        <field name="sequence" widget="handle"/>
                                        <field name="field_id" invisible="1" force_save="1"/>
                                        <field name="field_description" nolabel="1" readonly="1"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </page>

                    <page string="Layout">
                        <group>
                            <group style="width:40%;">
                                <field name="template_id"/>
                                <field name="orientation" widget="radio"/>
                                <field name="paper_size_format"/>
                                <field name="purchase_order_ids" widget="many2many_tags" invisible="1"/>
                            </group>
                            <group class="ml-5">
                                <field name="preview" widget="iframe_wrapper" nolabel="1"/>
                            </group>
                        </group>
                    </page>

                </notebook>
                <footer>
                    <button name="action_print" type="object" string="Print" class="oe_highlight"/>
                    <button name="action_print_save" type="object" string="Print and Save" class="oe_highlight"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
