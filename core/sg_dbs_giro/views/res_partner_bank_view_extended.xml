<odoo>

    <!-- Extended fields in Form View of Res Partner Bank -->
    <record id="res_partner_bank_extended_form_view" model="ir.ui.view">
        <field name="name">res.partner.bank.form.view.extended</field>
        <field name="model">res.partner.bank</field>
        <field name="inherit_id" ref="base.view_partner_bank_form" />
        <field name="arch" type="xml">
            <field name="bank_id" position="after">
                <field name="branch_code" />
            </field>
        </field>
    </record>

</odoo>