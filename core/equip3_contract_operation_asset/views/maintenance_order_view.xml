<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="maintenance_wo_inherit_form" model="ir.ui.view">
            <field name="name">maintenance_wo_inherit.form</field>
            <field name="model">maintenance.work.order</field>
            <field name="inherit_id" ref="equip3_asset_fms_operation.maintenance_work_order_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='created_date']" position="before">
                    <field name="agreement_id" widget="many2one" relation="agreement" string="Contract" domain="[('is_template', '=', False)]"/>
                </xpath>
            </field>
        </record>
        <record id="maintenance_ro_inherit_form" model="ir.ui.view">
            <field name="name">maintenance_ro_inherit.form</field>
            <field name="model">maintenance.repair.order</field>
            <field name="inherit_id" ref="equip3_asset_fms_operation.maintenance_repair_order_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='created_date']" position="before">
                    <field name="agreement_id" widget="many2one" relation="agreement" string="Contract" domain="[('is_template', '=', False)]"/>
                </xpath>
            </field>
        </record>
        <!-- maintenance.work.order tree view -->
        <record id="maintenance_wo_agreement_view_tree" model="ir.ui.view">
            <field name="name">maintenance.work.order.view.tree</field>
            <field name="model">maintenance.work.order</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="facility" />
                    <field name="maintenanceteam"/>
                    <field name="maintenanceassign"/>
                    <field name="ref"/>
                    <field name="state_id"/>
                    <field name="startdate" />
                    <field name="enddate" />
                    <field name="amount_untaxed" sum="Amoun Untaxed"/>
                    <field name="amount_tax" sum="Amount Tax"/>
                    <field name="amount_total" sum="Amount Total"/>
                </tree>
            </field>
        </record>
        <!-- maintenance.repair.order tree view -->
        <record id="maintenance_ro_agreement_view_tree" model="ir.ui.view">
            <field name="name">maintenance.repair.order.view.tree</field>
            <field name="model">maintenance.repair.order</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="facilities_area" />
                    <field name="maintenance_team"/>
                    <field name="maintenance_assignation_type"/>
                    <field name="ref"/>
                    <field name="state_id"/>
                    <field name="date_start" />
                    <field name="date_stop" />
                    <field name="amount_untaxed" sum="Amoun Untaxed"/>
                    <field name="amount_tax" sum="Amount Tax"/>
                    <field name="amount_total" sum="Amount Total"/>
                </tree>
            </field>
        </record>
    </data>
    
</odoo>