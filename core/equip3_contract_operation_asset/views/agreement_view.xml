<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="agreement_form_inherit" model="ir.ui.view">
            <field name="name">model.name.view.form</field>
            <field name="model">agreement</field>
            <field name="inherit_id" ref="agreement_legal.partner_agreement_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='oe_button_box']" position="inside">
                    <button name="mwo_link" type="object" class="oe_stat_button" icon="fa-wrench">
                        <field string="Work Order" name="mwo_count" widget="statinfo"/>
                    </button>
                    <button name="mro_link" type="object" class="oe_stat_button" icon="fa-wrench">
                        <field string="Repair Order" name="mro_count" widget="statinfo"/>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>