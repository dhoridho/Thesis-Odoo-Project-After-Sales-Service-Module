<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="base.res_partner_kanban_view" model="ir.ui.view">
        <field name="priority" eval="100"/>
    </record>

    <record id="equip_res_partner_kanban_view" model="ir.ui.view">
        <field name="name">res.partner.kanban</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <kanban class="o_res_partner_kanban o_equip_partner_kanban" sample="1">
                <field name="id"/>
                <field name="color"/>
                <field name="display_name"/>
                <field name="title"/>
                <field name="email"/>
                <field name="parent_id"/>
                <field name="is_company"/>
                <field name="function"/>
                <field name="phone"/>
                <field name="street"/>
                <field name="street2"/>
                <field name="zip"/>
                <field name="city"/>
                <field name="country_id"/>
                <field name="mobile"/>
                <field name="state_id"/>
                <field name="category_id"/>
                <field name="image_128"/>
                <field name="type"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                            <div class="o_equip_kanban_header">
                                <strong class="o_kanban_record_title oe_partner_heading"><field name="display_name"/></strong>
                            </div>

                            <div class="o_equip_kanban_content">
                                <div class="oe_kanban_details d-flex flex-column">
                                    <ul>
                                        <li t-if="record.city.raw_value or record.country_id.raw_value">
                                            <img class="o_address_icon" src="/equip3_kanban_view/static/img/address.svg" alt="Address"/>
                                            <t t-if="record.city.raw_value"><field name="city"/><t t-if="record.country_id.raw_value">, </t></t>
                                            <t t-if="record.country_id.raw_value"><field name="country_id"/></t>
                                        </li>
                                        <li t-if="record.mobile.raw_value">
                                            <img class="o_mobile_icon" src="/equip3_kanban_view/static/img/mobile.svg" alt="Mobile Phone"/>
                                            <field name="mobile" widget="phone"/>
                                        </li>
                                        <li t-if="record.email.raw_value" class="o_text_overflow">
                                            <img class="o_email_icon" src="/equip3_kanban_view/static/img/email.svg" alt="Email"/>
                                            <field name="email"/>
                                        </li>
                                    </ul>
                                    <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                </div>
                                <div class="o_equip_kanban_image">
                                    <t t-if="!record.is_company.raw_value">
                                        <t t-if="record.type.raw_value === 'delivery'" t-set="placeholder" t-value="'/base/static/img/truck.png'"/>
                                        <t t-elif="record.type.raw_value === 'invoice'" t-set="placeholder" t-value="'/base/static/img/money.png'"/>
                                        <t t-else="" t-set="placeholder" t-value="'/base/static/img/avatar_grey.png'"/>
                                        <div class="o_kanban_image_fill_left d-none d-md-block" t-attf-style="background-image:url('#{kanban_image('res.partner', 'image_128', record.id.raw_value,  placeholder)}')">
                                            <img class="o_kanban_image_inner_pic" t-if="record.parent_id.raw_value" t-att-alt="record.parent_id.value" t-att-src="kanban_image('res.partner', 'image_128', record.parent_id.raw_value)"/>
                                        </div>
                                        <div class="o_kanban_image d-md-none" t-attf-style="background-image:url('#{kanban_image('res.partner', 'image_128', record.id.raw_value,  placeholder)}')">
                                            <img class="o_kanban_image_inner_pic" t-if="record.parent_id.raw_value" t-att-alt="record.parent_id.value" t-att-src="kanban_image('res.partner', 'image_128', record.parent_id.raw_value)"/>
                                        </div>
                                    </t>
                                    <t t-else="">
                                        <t t-set="placeholder" t-value="'/base/static/img/company_image.png'"/>
                                        <div class="o_kanban_image_fill_left o_kanban_image_full" t-attf-style="background-image: url(#{kanban_image('res.partner', 'image_128', record.id.raw_value, placeholder)})" role="img"/>
                                    </t>
                                </div>
                            </div>

                            <div class="o_equip_kanban_footer">
                                <div class="o_row">
                                    <span class="oe_kanban_partner_links"/>
                                </div>
                            </div>
                            
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- base_setup -->
    <record id="base.action_partner_form_view1" model="ir.actions.act_window.view">
        <field name="view_id" ref="equip_res_partner_kanban_view"/>
    </record>

    <record id="base_setup.res_partner_kanban_view" model="ir.ui.view">
        <field name="inherit_id" ref="equip_res_partner_kanban_view"/>
    </record>

    <!-- contacts -->
    <record id="contacts.action_contacts_view_kanban" model="ir.actions.act_window.view">
        <field name="view_id" ref="equip_res_partner_kanban_view"/>
    </record>

    <!-- mail -->
    <record id="mail.res_partner_view_kanban_inherit_mail" model="ir.ui.view">
        <field name="inherit_id" ref="equip_res_partner_kanban_view"/>
    </record>

    <!-- membership -->
    <record id="membership.action_membership_members_view_kanban" model="ir.actions.act_window.view">
        <field name="view_id" ref="equip_res_partner_kanban_view"/>
    </record>

    <!-- point_of_sale -->
    <record id="point_of_sale.view_partner_pos_kanban" model="ir.ui.view">
        <field name="inherit_id" ref="equip_res_partner_kanban_view"/>
    </record>

    <record id="view_partner_pos_kanban" model="ir.ui.view">
        <field name="name">res.partner.pos.kanban.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="point_of_sale.view_partner_pos_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//span[@t-if='record.pos_order_count.value>0']" position="attributes">
                <attribute name="class" add="oe_kanban_action" separator=" "/>
                <attribute name="data-type">action</attribute>
                <attribute name="data-name">point_of_sale.action_pos_pos_form</attribute>
            </xpath>
        </field>
    </record>

    <!-- purchase -->
    <record id="purchase.purchase_partner_kanban_view" model="ir.ui.view">
        <field name="inherit_id" ref="equip_res_partner_kanban_view"/>
    </record>

    <record id="purchase_partner_kanban_view" model="ir.ui.view">
        <field name="name">res.partner.kanban.purchaseorder.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="purchase.purchase_partner_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//span[@t-if='record.purchase_order_count.value>0']" position="attributes">
                <attribute name="class" add="oe_kanban_action" separator=" "/>
                <attribute name="data-type">action</attribute>
                <attribute name="data-name">purchase.act_res_partner_2_purchase_order</attribute>
            </xpath>
        </field>
    </record>

    <!-- sale -->
    <record id="sale.crm_lead_partner_kanban_view" model="ir.ui.view">
        <field name="inherit_id" ref="equip_res_partner_kanban_view"/>
    </record>

    <record id="sale_crm_lead_partner_kanban_view" model="ir.ui.view">
        <field name="name">res.partner.kanban.saleorder.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="sale.crm_lead_partner_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//span[@t-if='record.sale_order_count.value>0']" position="attributes">
                <attribute name="class" add="oe_kanban_action" separator=" "/>
                <attribute name="data-type">action</attribute>
                <attribute name="data-name">sale.act_res_partner_2_sale_order</attribute>
            </xpath>
        </field>
    </record>

    <!-- crm -->
    <record id="crm.crm_lead_partner_kanban_view" model="ir.ui.view">
        <field name="inherit_id" ref="equip_res_partner_kanban_view"/>
    </record>

    <record id="crm_lead_partner_kanban_view" model="ir.ui.view">
        <field name="name">res.partner.kanban.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="crm.crm_lead_partner_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//span[@t-if='record.opportunity_count.value>0']" position="attributes">
                <attribute name="class" add="oe_kanban_action" separator=" "/>
                <attribute name="data-type">object</attribute>
                <attribute name="data-name">action_view_opportunity</attribute>
                <attribute name="data-context">{"default_partner_id": active_id}</attribute>
            </xpath>
            
            <xpath expr="//span[@t-if='record.meeting_count.value>0']" position="attributes">
                <attribute name="class" add="oe_kanban_action" separator=" "/>
                <attribute name="data-type">object</attribute>
                <attribute name="data-name">schedule_meeting</attribute>
                <attribute name="data-context">{"partner_id": active_id}</attribute>
            </xpath>
        </field>
    </record>

</odoo>