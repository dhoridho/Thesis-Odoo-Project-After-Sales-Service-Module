<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="product.product_template_kanban_view" model="ir.ui.view">
        <field name="priority" eval="100"/>
    </record>

    <record id="equip_product_template_kanban_view" model="ir.ui.view">
        <field name="name">Product.template.product.kanban</field>
        <field name="model">product.template</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <kanban sample="1" class="o_equip_product_kanban">
                <field name="id"/>
                <field name="product_variant_count"/>
                <field name="currency_id"/>
                <field name="activity_state"/>
                <field name="categ_id"/>
                <progressbar field="activity_state" colors='{"planned": "success", "today": "warning", "overdue": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('product.template', 'image_128', record.id.raw_value)" alt="Product" class="o_image_64_contain"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <t>
                                    [<field name="default_code"/>]
                                    <div class="o_product_category">
                                        <t t-if="record.categ_id.value" t-esc="record.categ_id.value.split('/')[record.categ_id.value.split('/').length - 1]"/>
                                    </div>
                                </t>

                                <div t-if="record.product_variant_count.value &gt; 1" groups="product.group_product_variant" invisible="1">
                                    <strong>
                                        <t t-esc="record.product_variant_count.value"/> Variants
                                    </strong>
                                </div>

                                <div class="o_product_info_wrapper">
                                    <div name="product_lst_price">
                                        <span class="o_label">Price</span>
                                        <span class="o_value">
                                            <field name="lst_price" widget="monetary" options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="product.product_template_action" model="ir.actions.act_window">
        <field name="view_id" ref="equip_product_template_kanban_view"/>
    </record>

    <record id="sale.product_template_action" model="ir.actions.act_window">
        <field name="view_id" ref="equip_product_template_kanban_view"/>
    </record>

    <record id="stock.product_template_kanban_stock_view" model="ir.ui.view">
        <field name="inherit_id" ref="equip_product_template_kanban_view"/>
    </record>

    <record id="equip_product_template_kanban_stock_view" model="ir.ui.view">
        <field name="name">Product Template Kanban Stock</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.product_template_kanban_stock_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='qty_available']/parent::div" position="replace">
                <div name="on_hand_qty">
                    <span class="o_label">On Hand</span>
                    <span class="o_value">
                        <field name="qty_available"/> <field name="uom_id" invisible="1"/>
                    </span>
                </div>
            </xpath>
        </field>
    </record>

</odoo>