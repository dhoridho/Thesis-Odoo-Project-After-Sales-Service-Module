<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_move_measurement_wizard_form_view" model="ir.ui.view">
        <field name="name">stock._move.measurement.wizard.form.view</field>
        <field name="model">sh.stock.move.qc.measurement</field>
        <field name="arch" type="xml">
            <form string="Quality Measurement">
                <div class="oe_title">
                    <h1>
                        <field name="product_id" />
                    </h1>
                </div>

                <group>
                    <group>
                        <field name="picking_id" invisible="1" />
                        <field name="quality_point_id" invisible="1" />
                        <field name="sh_measure" />
                        <field name="sh_message" />
                    </group>
                </group>
                <footer>
                    <button name="action_validate" type="object" string="Validate" class="oe_highlight" />
                    or
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="stock_move_measurement_wizard_action" model="ir.actions.act_window">
        <field name="name">Quality Measurement</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.stock.move.qc.measurement</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="stock_move_measurement_wizard_form_view" />
        <field name="target">new</field>
    </record>
</odoo>
