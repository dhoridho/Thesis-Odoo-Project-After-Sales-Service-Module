<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="measurement_wizard_form_view" model="ir.ui.view">
        <field name="name">measurement.wizard.form.view</field>
        <field name="model">sh.qc.measurement</field>
        <field name="arch" type="xml">
            <form string="Quality Measurement">
                <sheet>
                    <notebook>
                        <page>
                            <field name="measurement_ids">
                                <tree editable="bottom" decoration-danger="state=='fail'" decoration-success="state=='pass'">
                                    <field name="product_id" />
                                    <field name="sh_text" />
                                    <field name="quality_point_id" invisible="1" />
                                    <field name="type" invisible="1" />
                                    <field name="sh_measure" attrs="{'readonly':[('type','=','type1')]}" />
                                    <field name="state" force_save="1" attrs="{'readonly':[('type','=','type2')]}" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_validate" type="object" string="Save" class="oe_highlight" />
                    or
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="measurement_wizard_action" model="ir.actions.act_window">
        <field name="name">Quality Measurement</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.qc.measurement</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="measurement_wizard_form_view" />
        <field name="target">new</field>
    </record>
</odoo>
