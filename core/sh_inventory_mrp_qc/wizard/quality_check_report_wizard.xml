<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="quality_check_report_wizard_view" model="ir.ui.view">
        <field name="name">quality.check.report.wizard.view</field>
        <field name="model">quality.check.report</field>
        <field name="arch" type="xml">
            <form string="Quality Check Report">
                <group>
                    <group>
                        <field name="date_from" />
                        <field name="product_ids" widget="many2many_tags" />
                        <field name="group_by" />
                    </group>
                    <group>
                        <field name="date_to" />
                        <field name="state" widget="radio" />
                    </group>
                </group>

                <footer>
                    <button name="print_report" string="Print" class="oe_highlight" type="object" />
                    or
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="quality_check_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Quality Check Report</field>
        <field name="res_model">quality.check.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
    <record id="quality_check_report_action" model="ir.actions.act_window">
        <field name="name">Quality Check</field>
        <field name="res_model">sh.quality.check</field>
        <field name="view_mode">pivot</field>
    </record>

   
    <record id="quality_alert_report_action" model="ir.actions.act_window">
        <field name="name">Quality Alert</field>
        <field name="res_model">sh.quality.alert</field>
        <field name="view_mode">pivot</field>
    </record>

   
</odoo>
