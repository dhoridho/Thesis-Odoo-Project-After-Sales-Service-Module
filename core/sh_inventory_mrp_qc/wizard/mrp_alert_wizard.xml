<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_quality_alert_wizard_form_view" model="ir.ui.view">
        <field name="name">sh.mrp.qc.alert.wizard.form.view</field>
        <field name="model">sh.mrp.qc.alert</field>
        <field name="arch" type="xml">
            <form string="Quality Alert">
                <sheet>
                    <group>
                        <group>
                            <field name="team_id" />
                            <field name="user_id" />
                        </group>
                        <group>
                            <field name="sh_priority" widget="priority" />
                        </group>
                    </group>
                    <notebook>
                        <page>
                            <field name="alert_ids">
                                <tree editable="bottom">
                                    <field name="product_id" />
                                    <field name="partner_id" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_validate" type="object" string="Save" class="oe_highlight" />
                    or
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="mrp_quality_alert_wizard_action" model="ir.actions.act_window">
        <field name="name">Mrp Quality Alert</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.mrp.qc.alert</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="mrp_quality_alert_wizard_form_view" />
        <field name="target">new</field>
    </record>
</odoo>
