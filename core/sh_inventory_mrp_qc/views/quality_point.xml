<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="quality_point_form_view" model="ir.ui.view">
        <field name="name">quality.point.form.view</field>
        <field name="model">sh.qc.point</field>
        <field name="arch" type="xml">
            <form string="Quality Point">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="product_id" invisible="1"/>
                            <field name="operation" invisible="1"/>
                            <field name="product_ids" widget="many2many_tags" required="1"/>
                            <field name="operation_ids" widget="many2many_tags" required="1"/>
                            <field name="company_id" groups="base.group_multi_company" />
                            <field name="team" />
                            <field name="is_mandatory" />
                        </group>
                        <group>
                            <field name="type" required="1" />
                            <field name="number_of_test" />
                            <field name="sh_norm" attrs="{'invisible':[('type_id','=',False)]}" />
                            <label for="sh_unit_to" string="Tolerance" attrs="{'invisible':[('type_id','=',False)]}" />
                            <div class="o_row" attrs="{'invisible':[('type_id','=',False)]}">
                                <label for="sh_unit_from" string="From" attrs="{'invisible':[('type_id','=',False)]}" />
                                <field name="sh_unit_from" />
                                <label for="sh_unit_to" string="To" attrs="{'invisible':[('type_id','=',False)]}" />
                                <field name="sh_unit_to" />
                            </div>

                            <field name="logged_user" />
                            <field name="type_id" invisible="1" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Instruction">
                            <field name="sh_instruction" />
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <record id="quality_point_search_view" model="ir.ui.view">
        <field name="name">quality.point.search.view</field>
        <field name="model">sh.qc.point</field>
        <field name="arch" type="xml">
            <search string="Quality Point">
                <field name="product_id" />
                <group expand="0" string="Group By">
                    <filter string="Product" name="product" context="{'group_by':'product_id'}" />
                    <filter string="Picking Type" name="picking_type" context="{'group_by':'operation'}" />
                    <filter string="Company" name="company" context="{'group_by':'company_id'}" />
                </group>
            </search>
        </field>
    </record>
    <record id="quality_point_tree_view" model="ir.ui.view">
        <field name="name">quality.point.tree.view</field>
        <field name="model">sh.qc.point</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Name" />
                <field name="product_id" invisible="1"/>
                <field name="operation" invisible="1"/>
                <field name="product_ids" widget="many2many_tags"/>
                <field name="type" />
                <field name="operation_ids" widget="many2many_tags"/>
                <field name="company_id" />
            </tree>
        </field>
    </record>
    <record id="quality_point_action" model="ir.actions.act_window">
        <field name="name">Quality Point</field>
        <field name="res_model">sh.qc.point</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="quality_point_tree_view" />
    </record>
</odoo>
