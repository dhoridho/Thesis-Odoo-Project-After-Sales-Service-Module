<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <!-- Client Action -->
    <t t-name="StockScale">
        <div class="o_stock_sale_action">
            <div class="o_alert"/>

            <div class="row">
                <div class="col-12">
                    <div class="o_button_increase">
                        <span class="o_increase fa fa-caret-up" title="Increase"/>
                    </div>
                    <div class="o_scale_container">
                        <span class="o_scale" title="Scale"><t t-esc="widget.formatFloat(widget.scale)"/></span>
                    </div>
                    <div class="o_button_decrease">
                        <span class="o_decrease fa fa-caret-down" title="decrease"/>
                    </div>
                </div>
            </div>
            <div class="o_footer_button">
                <button class="btn btn-primary o_start_listen" style="display: none;">Start Listen</button>
                <button class="btn btn-primary o_stop_listen">Stop Listen</button>
                <button class="btn btn-primary o_input_button">Input</button>
            </div>
        </div>
    </t>

    <t t-name="StockSaleAlert">
        <div class="alert alert-danger" role="alert">
            There was a problem when fetching stock scale data, default to 0.00. <a href="#errMessage" class="alert-link" data-toggle="collapse">More info</a>.
        </div>
        <div class="collapse" id="errMessage">
            <div class="card card-body"><t t-esc="widget.errMessage"/></div>
        </div>
    </t>

</templates>