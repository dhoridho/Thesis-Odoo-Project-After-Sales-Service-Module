<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="equip3_approval_dashboard.approval_dashboard">
        <div class="o_dashboards">
            <div class="container-fluid o_oa_dashboard" style="background: white;overflow: scroll;">
                <!-- <div style="border: 1px solid #cccccc;"> -->
                    <t t-call="equip3_approval_dashboard.dashboard_header"/>
                    <div class="o_website_dashboard_content"/>
                <!-- </div> -->
            </div>
        </div>
    </t>

    <t t-name="equip3_approval_dashboard.o_website_dashboard_content_body">
        <div class="row dashboard_approval_cu" style="background: white; text-align: center; margin: -4px; border: 1px solid #cccccc;    font-family: Poppins;">
           
            <div class="col-12">
                <div class="col-12">
                    <br/>
                    <h3  class="text-left">Summary</h3>
                    <br/>

                </div>
                <div class="col-12" style=" padding: unset; left: 15px; ">
                    <div class="row">
                        <div class="col-2" style="padding: unset !important;background: white; text-align: center; margin: -4px;">
                            <!-- vertical-align: middle; justify-content: center; align-items: center; display: flex; -->
                            <div style="border: 1px solid #cccccc;box-shadow: 3px 3px 10px 0 rgb(209 196 233 / 50%);border-radius: 5px;height: 100%;vertical-align: middle; justify-content: center; align-items: center; display: flex;    margin-right: 10px;margin-left: 10px;">
                                <div style="margin: auto;width: 50%;">
                                    <h1><b><span t-esc="total" style="    font-size: 40px;"/></b></h1>
                                    <h2 style="color:black;" class="text-center"><b>Total</b></h2>
                                </div>
                            </div>
                    
                        </div>
                        <div class="col-6" style="padding: unset !important;background: white; text-align: center; margin: -4px;">
                            <div style="border: 1px solid #cccccc;box-shadow: 3px 3px 10px 0 rgb(209 196 233 / 50%);border-radius: 5px;height: 100%;margin-right: 10px;margin-left: 10px;">
                                <br/>
                                <div>
                    
                                    <canvas id="myChartbar" ></canvas>
                                </div>
                                <br/>
                            </div>
                        </div>
                        <div class="col-4" style="padding: unset !important;background: white; text-align: center;">
                            <div style="border: 1px solid #cccccc;box-shadow: 3px 3px 10px 0 rgb(209 196 233 / 50%);border-radius: 5px;height: 100%;">
                                
                                 <div style="font-family: Poppins;height: 100%;">
                                    <canvas id="myChartcicrle"  style="font-family: Poppins;bottom: -72px;
    position: relative;height: 100%;"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
            <div class="col-12">
                <div class="col-12">
                    <br/><br/><br/>
                    <h1 class="main_title" style="text-align: left;">My Pending Approvals</h1>
                    <br/>
                    <select name="approval_modul_name" class="approval_modul_name" style="color: #464d69;font-size: 18px !important;font-weight: bold;width: unset; border-top: unset; border-left: unset; border-right: unset;">
                        <option value="0">My Pending Approvals</option>
                        <t t-foreach="list_modul" t-as="modul">
                            <t t-if="approval_modul_name != ''">
                                <t t-if="approval_modul_name == modul">
                                    <option t-att-value="modul" selected="1"><t t-esc="modul"/></option>
                                </t>
                                <t t-if="approval_modul_name != modul">
                                    <option t-att-value="modul"><t t-esc="modul"/></option>
                                </t>
                            </t>
                            <t t-if="approval_modul_name == ''">
                                <option t-att-value="modul"><t t-esc="modul"/></option>
                            </t>
                        </t>
                    </select>
                    <br/>
                    <table class="table table-bordered">
                        <t t-set="count" t-value="0"/>
                        <thead>
                            <tr>
                                <td width="8%"></td>

                                <td width="22%" class="text-center">
                                    <p style="margin:0px;"><b>Number</b></p>
                                </td>

                                <td width="20%" class="text-center">
                                    <p style="margin:0px;"><b>Modul</b></p>
                                </td>

                                <td width="20%" class="text-center">
                                    <p style="margin:0px;"><b>User</b></p>
                                </td>

                                <td width="15%" class="text-center">
                                    <p style="margin:0px;"><b>Apllied Date</b></p>
                                </td>

                                <td width="15%" class="text-center">
                                    <p style="margin:0px;"><b>Status</b></p>
                                </td>

                                <td width="15%" class="text-center">
                                    <p style="margin:0px;"><b>Actions</b></p>
                                </td>

                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="detail_data" t-as="a">
                                <t t-set="next_can" t-value="1"/>
                                <t t-if="approval_modul_name != ''">
                                    <t t-if="approval_modul_name!=a['name']">
                                        <t t-set="next_can" t-value="0"/>
                                    </t>
                                </t>
                                <t t-if="next_can==1">
                                    
                                    <tr class="approval_table_tr" t-att-data-name="a['name']" t-att-data-id="a['id']" t-att-data-model="a['model']">
                                        <t t-set="count" t-value="count+1"/>
                                        <td class="text-center">
                                            <p><span t-esc="count"/></p>
                                        </td>

                                        <td>
                                             <p><span t-esc="a['number']"/></p>
                                        </td>
                                        <td>
                                            <p><span t-esc="a['name']"/></p>
                                        </td>
                                        <td>
                                            <p><span t-esc="a['employee']"/></p>
                                        </td>

                                        <td>
                                            <p><span t-esc="a['date']"/></p>
                                        </td>

                                        <td>
                                            <p>To Approve</p>
                                        </td>
                                        <td>
                                            <p><button type="button" class="fa fa-external-link btn btn-secondary o_external_button" tabindex="-1" draggable="false" aria-label="External link" title="External link"></button></p>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
            <!--My Request Approvals-->
                        <div class="col-12">
                <div class="col-12">
                    <br/><br/><br/>
                    <h1 class="main_title" style="text-align: left;">My Request Approvals</h1>
                    <br/>
                    <select name="req_approval_modul_name" class="req_approval_modul_name" style="color: #464d69;font-size: 18px !important;font-weight: bold;width: unset; border-top: unset; border-left: unset; border-right: unset;">
                        <option value="0">Approvals</option>
                        <t t-foreach="list_modul" t-as="modul">
                            <t t-if="req_approval_modul_name != ''">
                                <t t-if="req_approval_modul_name == modul">
                                    <option t-att-value="modul" selected="1"><t t-esc="modul"/></option>
                                </t>
                                <t t-if="req_approval_modul_name != modul">
                                    <option t-att-value="modul"><t t-esc="modul"/></option>
                                </t>
                            </t>
                            <t t-if="req_approval_modul_name == ''">
                                <option t-att-value="modul"><t t-esc="modul"/></option>
                            </t>
                        </t>
                    </select>
                    <br/>
                    <table class="table table-bordered">
                        <t t-set="count" t-value="0"/>
                        <thead>
                            <tr>
                                <td width="8%"></td>

                                <td width="22%" class="text-center">
                                    <p style="margin:0px;"><b>Number</b></p>
                                </td>

                                <td width="20%" class="text-center">
                                    <p style="margin:0px;"><b>Modul</b></p>
                                </td>

                                <td width="20%" class="text-center">
                                    <p style="margin:0px;"><b>User</b></p>
                                </td>

                                <td width="15%" class="text-center">
                                    <p style="margin:0px;"><b>Apllied Date</b></p>
                                </td>

                                <td width="15%" class="text-center">
                                    <p style="margin:0px;"><b>Status</b></p>
                                </td>

                                <td width="15%" class="text-center">
                                    <p style="margin:0px;"><b>Actions</b></p>
                                </td>

                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="my_req_approval" t-as="a">
                                <t t-set="next_can" t-value="1"/>
                                <t t-if="req_approval_modul_name != ''">
                                    <t t-if="req_approval_modul_name!=a['name']">
                                        <t t-set="next_can" t-value="0"/>
                                    </t>
                                </t>
                                <t t-if="next_can==1">

                                    <tr class="approval_table_tr" t-att-data-name="a['name']" t-att-data-id="a['id']" t-att-data-model="a['model']">
                                        <t t-set="count" t-value="count+1"/>
                                        <td class="text-center">
                                            <p><span t-esc="count"/></p>
                                        </td>

                                        <td>
                                             <p><span t-esc="a['number']"/></p>
                                        </td>
                                        <td>
                                            <p><span t-esc="a['name']"/></p>
                                        </td>
                                        <td>
                                            <p><span t-esc="a['employee']"/></p>
                                        </td>

                                        <td>
                                            <p><span t-esc="a['date']"/></p>
                                        </td>

                                        <td>
                                            <p>To Approve</p>
                                        </td>
                                        <td>
                                            <p><button type="button" class="fa fa-external-link btn btn-secondary o_external_button" tabindex="-1" draggable="false" aria-label="External link" title="External link"></button></p>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </t>

    <t t-name="equip3_approval_dashboard.dashboard_header">
        <div class="row" style="background: white;text-align: center;">
            <div class="o_box" style="padding-bottom:50px;">
                <div class="col-md-12">
                    <br/>
                    <h1 class="main_title">Approvals</h1>
                </div>
            </div>
        </div>
    </t>

</templates>