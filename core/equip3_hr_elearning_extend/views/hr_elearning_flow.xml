<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	 <record id="hr_elearning_flow_view_form" model="ir.ui.view">
        <field name="name">hr.elearning.flow.view.form</field>
        <field name="model">hr.elearning.flow</field>
        <field name="arch" type="xml">
            <form string="E-Learning Flow" class="hr_elearning_flow_menu d-flex flex-column"> 
                <div class="content-header">
                    <div class="d-flex p-3 w-100">
                        <span>E-Learning Flow</span>
                    </div>
                </div>
                <div class="content-body">
                    <div class="container h-100">
                        <div class="row h-100">

                            <div class="col-md-2 d-flex flex-column">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="website_slides.slide_channel_tag_group_action" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_elearning_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Course Groups</div>
                                        </button>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="website_slides.website_slides_action_settings" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_elearning_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Settings</div>
                                        </button>
                                        <div class="menu-arrow-right">
                                            <span class="arrow is-triangle arrow-bar is-right"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-12"> 
                                        <button name="website_slides.action_slide_tag" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_elearning_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Content Tags</div>
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 d-flex flex-column">
                                <div class="row">
                                    <div class="col-md-3 col-sm-3 col-3"> 
                                        <button name="action_none" 
                                            type="object"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_elearning_extend/static/src/img/configuration.svg"/>
                                            </div>
                                            <div class="button-text">Configuration</div>
                                        </button>
                                        <div class="menu-arrow-right">
                                            <span class="arrow is-triangle arrow-bar is-right"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-3 col-3"> 
                                        <button name="website_slides.slide_slide_action" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_elearning_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Contents</div>
                                        </button>
                                        <div class="menu-arrow-right">
                                            <span class="arrow is-triangle arrow-bar is-right"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-3 col-3"> 
                                        <button name="website_slides.slide_channel_action_overview" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_elearning_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Courses</div>
                                        </button>
                                        <div class="menu-arrow-right">
                                            <span class="arrow is-triangle arrow-bar is-right"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-3 col-3"> 
                                        <button name="website_slides.rating_rating_action_slide_channel" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_elearning_extend/static/src/img/application.svg"/>
                                            </div>
                                            <div class="button-text">Reviews</div>
                                        </button>
                                        <div class="menu-arrow-right-long">
                                            <span class="arrow is-triangle arrow-bar is-right"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4 d-flex flex-column">
                                <div class="row">
                                    <div class="col-md-6 col-sm-6 col-6"> 
                                        <button name="website_slides.slide_channel_action_report" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_elearning_extend/static/src/img/reporting.svg"/>
                                            </div>
                                            <div class="button-text">Courses</div>
                                        </button>
                                    </div>
                                    <div class="col-md-6 col-sm-6 col-6"> 
                                        <button name="website_slides.slide_slide_action_report" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_elearning_extend/static/src/img/reporting.svg"/>
                                            </div>
                                            <div class="button-text">Contents</div>
                                        </button>
                                    </div>
                                    <div class="col-md-6 col-sm-6 col-6"> 
                                        <button name="action_none" 
                                            type="object"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_elearning_extend/static/src/img/reporting.svg"/>
                                            </div>
                                            <div class="button-text">Reporting</div>
                                        </button>
                                        <div class="menu-arrow-up">
                                            <span class="arrow is-triangle arrow-bar-short is-up"></span>
                                        </div>
                                        <div class="menu-arrow-up-right">
                                            <span class="arrow is-triangle arrow-bar-long is-up-right"></span>
                                        </div>
                                        <div class="menu-arrow-right-long">
                                            <span class="arrow is-triangle arrow-bar-long is-right"></span>
                                        </div>
                                        <div class="menu-arrow-down-right">
                                            <span class="arrow is-triangle arrow-bar-long is-down-right"></span>
                                        </div>
                                        <div class="menu-arrow-down">
                                            <span class="arrow is-triangle arrow-bar-short is-down"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-6 col-6"> 
                                        <button name="website_slides.rating_rating_action_slide_channel_report" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_elearning_extend/static/src/img/reporting.svg"/>
                                            </div>
                                            <div class="button-text">Reviews</div>
                                        </button>
                                    </div>
                                    <div class="col-md-6 col-sm-6 col-6"> 
                                        <button name="website_slides_survey.survey_survey_action_slides_report" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_elearning_extend/static/src/img/reporting.svg"/>
                                            </div>
                                            <div class="button-text">Certifications</div>
                                        </button>
                                    </div>
                                    <div class="col-md-6 col-sm-6 col-6"> 
                                        <button name="website_slides.slide_question_action_report" 
                                            type="action"
                                            class="btn btn-default">
                                            <div class="button-img">
                                                <img class="img-fluid" src="/equip3_hr_elearning_extend/static/src/img/reporting.svg"/>
                                            </div>
                                            <div class="button-text">Quizzes</div>
                                        </button>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </form>
        </field>
    </record>

    <record id="hr_elearning_flow_act_window" model="ir.actions.act_window">
        <field name="name">E-Learning Flow</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.elearning.flow</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <record id="elearning_flow_action_client" model="ir.actions.client">
        <field name="name">E-Learning Flow</field>
        <field name="tag">elearning_flow_tag</field>
    </record>

    <menuitem 
        id="hr_elearning_flow_menu"
        name="E-Learning Flow"
        action="elearning_flow_action_client"
        parent="website_slides.website_slides_menu_root"
        sequence="0"/>
    
    <record id="equip3_hr_elearning_extend.hr_elearning_flow_menu" model="ir.ui.menu">
        <field name="equip_icon_class">o-hm-sidebar-main-flow</field>
    </record>
</odoo>