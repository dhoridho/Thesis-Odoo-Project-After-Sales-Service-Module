<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="elearning_course_view_form" model="ir.ui.view">
            <field name="name">elearning.course.form.inherit</field>
            <field name="model">slide.channel</field>
            <field name="inherit_id" ref="website_slides.view_slide_channel_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_view_slides']" position="attributes">
                    <attribute name="icon">o-hm-smart-hrm-visits-contents</attribute>
                </xpath>
                <xpath expr="//button[@name='action_redirect_to_done_members']" position="attributes">
                    <attribute name="icon">o-hm-smart-hrm-finished</attribute>
                </xpath>
                <xpath expr="//button[@name='action_redirect_to_members']" position="attributes">
                    <attribute name="icon">o-hm-smart-hrm-attendees</attribute>
                </xpath>
                <xpath expr="//button[@name='action_view_ratings']" position="attributes">
                    <attribute name="icon">o-hm-smart-hrm-reviews</attribute>
                </xpath>
            </field>
        </record>    
    </data>
</odoo>