      <record id="elearning_training_conduct_form" model="ir.ui.view">
          <field name="name">elearning.training.conduct.form</field>
          <field name="model">training.conduct</field>
          <field name="inherit_id" ref="equip3_hr_training.form_training_conduct"/>
          <field name="arch" type="xml">
              <xpath expr="//field[@name='certificate_hide']" position="after">
                  <field name="website_url" invisible="1"/>
                  <field name='e_learning_hide' invisible="1"/>
              </xpath>
              <xpath expr="//button[@name='wizard_reject']" position="after">
                  <button string="Send ELearning" name="e_learning_mail" type="object"
                          class="oe_highlight"
                          attrs="{'invisible': ['|', '|', ('is_approved', '=', False), ('e_learning_hide', '!=', False), ('e_learning', '!=', True)]}"/>
              </xpath>
              <xpath expr="//field[@name='responsible_ids']" position="after">
                  <field name="e_learning" attrs="{'readonly' : [('state', '!=', 'draft')]}"/>
                  <field name="e_learning_course_id"
                         attrs="{'invisible' : [('e_learning', '!=', True)], 'required' : [('e_learning', '=', True)], 'readonly' : [('state', '!=', 'draft')]}"/>
              </xpath>
              <xpath expr="//field[@name='conduct_line_ids']/tree/field[@name='status']" position="before">
                  <field name="e_learning_progress" widget="progressbar"/>
              </xpath>
          </field>
      </record>

      <record id="hr_job_form_elearning_inherit" model="ir.ui.view">
          <field name="name">hr.job.form.elearning.inherit</field>
          <field name="model">hr.job</field>
          <field name="inherit_id" ref="equip3_hr_recruitment_extend.inherit_hr_job_form_view"/>
          <field name="arch" type="xml">
              <xpath expr="//field[@name='course_ids']" position="after">
                  <field name="e_learning_required_ids" widget="many2many_tags"/>
              </xpath>
          </field>
      </record>
