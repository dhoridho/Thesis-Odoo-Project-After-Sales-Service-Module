<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record id="pos_config_view_form_inherit" model="ir.ui.view">
	    <field name="name">pos.config.view.form.inherit</field>
	    <field name="model">pos.config</field>
	    <field name="inherit_id" ref="equip3_pos_general.pos_config_retail"/>
	    <field name="arch" type="xml">
	        <xpath expr="//page[@name='pos_orders']" position="inside">
                <group name="product_exchange" string="Exchange">
                    <field name="is_allow_product_exchange"/>
                    <field name="product_exchange_pin_ids"
                		widget="many2many_tags"
                       	attrs="{'invisible': [('is_allow_product_exchange', '=', False)], 'required': [('is_allow_product_exchange', '=', True)]}"/>
                </group>
	        </xpath>
	        <xpath expr="//page[@name='pos_database']/group" position="inside">
                <group name="save_order_history_local">
                    <div class="row mt16 o_settings_container" id="save_order_history_local">
                        <div id="save_order_history_local_setting_box" class="col-xs-12 col-md-12 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_save_order_history_local"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_save_order_history_local"/>
							    <div class="text-muted">Allow pos to save order in local storage</div>
                                <div attrs="{'invisible': [('is_save_order_history_local', '=', False)]}" class="d-flex align-items-center">
                                    <field name="save_order_history_local_days"/>
                                	<div class="oe_edit_only">
                                		<span class="ml8">Days</span>
                                	</div>
                                	<div class="oe_read_only" style="min-height: 31.45px; margin-bottom: 4px;">
                                		<span class="ml8">Days</span>
                                	</div>
                                </div>
                            </div> 
                        </div>
                        <div id="save_order_to_pos_cache_service_setting_box" class="col-xs-12 col-md-12 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_save_order_to_pos_cache_service"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="link_pos_cache_service"/>
                                <div class="text-muted">Allow pos to save order to External POS Cache</div>
                                <div class="d-flex align-items-center" attrs="{'invisible': [('is_save_order_to_pos_cache_service', '=', False)]}">
                                    <field name="link_pos_cache_service"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </group>
	        </xpath>
	    </field>
	</record>

</odoo>