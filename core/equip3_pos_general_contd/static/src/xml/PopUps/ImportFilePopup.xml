<?xml version="1.0" encoding="UTF-8"?>  
<templates id="template" xml:space="preserve">
    <t t-name="ImportFilePopup" owl="1">
       <div class="modal-dialog import-file-popups">
            <div class="popup" t-att-import_state="state.import_state">
                <div class="title">
                    <t t-esc=" props.title || 'Import' " />
                </div>
                <div class="body">
                    <div class="content">
                        <input type="file" id="import_file_local_order_log"/>
                    </div>
                </div>
                <div class="footer">
                    <div class="button confirm" t-on-click="import">
                        <t t-if="state.import_state == 'loading'">
                            <i class="fa fa-fw fa-spin fa-spinner" aria-label="Loading" title="Loading"/>
                        </t>
                        <span>Import</span>
                    </div>
                    <div class="button cancel" t-on-click="cancel">
                        Cancel
                    </div>
                </div>
            </div>
        </div>
    </t> 
</templates>
    
