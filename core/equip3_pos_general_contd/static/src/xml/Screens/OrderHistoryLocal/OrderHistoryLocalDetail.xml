<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="OrderHistoryLocalDetail" owl="1">
        <t t-set="record" t-value="props.record"/>
        
        <section class="client-details edit">
            <div class="header">
                <button class="button-right button-push-order" t-on-click="pushOrder(record)">
                   <t t-if="sync.state == 'connecting'">
                       <i aria-label="Sync Connecting" title="Sync Connecting" class="fa fa-fw fa-spin fa-spinner"></i>
                   </t>
                    Force Sync
                </button>
            </div>
            <div class="client-name">
                <t t-if="record.name != '/'">
                    <t t-esc="record.name"/>
                </t>
            </div>
            <div class="client-details-box clearfix">
                <div class="client-details-left">
                    <t t-if="record.partner_id">
                        <div class="client-detail">
                            <span class="label">Customer</span>
                            <span class="detail"><t t-esc="getCustomer(record)"/></span>
                        </div>
                    </t>
                    <div class="client-detail">
                        <span class="label">Receip Number</span>
                        <span class="detail">
                            <t t-if="record.name">
                                <t t-esc="record.name"/>
                            </t>
                            <t t-if="!record.name">
                                N/A
                            </t>
                        </span>
                    </div>
                    <div class="client-detail">
                        <span class="label">Ean13</span>
                        <span class="detail">
                            <t t-if="record.ean13">
                                <t t-esc="record.ean13"/>
                            </t>
                            <t t-if="!record.ean13">
                                N/A
                            </t>
                        </span>
                    </div>
                    <div class="client-detail">
                        <span class="label">Date</span>
                        <span class="detail">
                            <t t-esc="getDate(record)"/>
                        </span>
                    </div>
                    <t t-if="record.note">
                        <div class="client-detail">
                            <span class="label">Note</span>
                            <span class="detail">
                                <t t-esc="record.note"/>
                            </span>
                        </div>
                    </t>
                    <div class="client-detail">
                        <span class="label">Cashier</span>
                        <span class="detail">
                            <t t-esc="getCashier(record)"/>
                        </span>
                    </div>
                </div>
                <div class="client-details-right">
                    <div class="client-detail">
                        <span class="label">Total</span>
                        <span class="detail value"><t t-esc="env.pos.format_currency(record.amount_total)"/></span>
                    </div>
                </div>
            </div>
        </section>
    </t>
</templates>
