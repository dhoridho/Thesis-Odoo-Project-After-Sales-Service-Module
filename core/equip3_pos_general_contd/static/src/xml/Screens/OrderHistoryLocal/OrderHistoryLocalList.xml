<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="OrderHistoryLocalList" owl="1">
        <div class="ticket-screen screen member-record-list" t-on-activate-edit-mode="activateEditMode">
            <div class="screen-content">

                <div class="controls">
                    <div class="buttons">
                        <button class="highlight close-screen-button" t-on-click="closeScreen" t-if="!state.detailIsShown">
                            <i class="fa fa-chevron-left"></i>
                            <t t-if="!env.isMobile"> Back</t>
                        </button>
                        <button class="highlight" t-on-click="back" t-if="state.detailIsShown">
                            <i class="fa fa-chevron-left"></i>
                            <t t-if="!env.isMobile"> Back</t>
                        </button>
                    </div>

                    <SearchBar automaticSearchOrder="true" t-if="!state.detailIsShown" config="searchBarConfig" placeholder="'Search order from local storage...'"/>

                    <div t-if="state.action" class="action-control filter radius-right" 
                        style="margin-right: 0; margin-left: 13%;"
                        t-on-click.stop="state.action.showOptions = !state.action.showOptions">
                        <span class="down-icon">
                            <i class="fa fa-chevron-down" aria-hidden="true"></i>
                        </span>
                        <span>
                            <t t-esc="state.action.label"/>
                        </span>
                        <ul t-if="state.action.showOptions" class="options">
                            <t t-foreach="state.action.options" t-as="option" t-key="option">
                                <li t-on-click="selectAction(option)">
                                    <t t-esc="option"></t>
                                </li>
                            </t>
                        </ul>
                    </div>

                    <button class="button-right button-sync-session-order" t-on-click="pushOrders" t-if="!state.detailIsShown">
                        <t t-if="sync.state == 'connecting'">
                           <i aria-label="Sync Connecting" title="Sync Connecting" class="fa fa-fw fa-spin fa-spinner"></i>
                        </t>
                        Sync
                    </button>

                    <div class="record-count" t-if="!state.detailIsShown">
                        <span>Order: </span>
                        <span><t t-esc="getRecordCount()"/></span>
                    </div>
                    <button class="button-right" t-on-click="clearSearch" t-if="!state.detailIsShown">
                        <i class="fa fa-refresh "></i>
                        <t t-if="!env.isMobile"> Show All</t>
                    </button>

                </div>


                <div t-if="state.detailIsShown" class="client-details-contents subwindow-container-fix">
                    <OrderHistoryLocalDetail record="state.editModeProps.record" t-props="state.editModeProps"/>
                </div>

                <t t-if="!state.detailIsShown">
                    <table class="summary-table" t-if="(getRecords and getRecords.length != 0)">
                        <colgroup>
                            <col width="7%"/>
                            <col width="28%"/>
                            <col width="20%"/>
                            <col width="10%"/>
                            <col width="15%"/>
                        </colgroup>
                        <tr class="receipt-line header">
                            <td style="text-align: left">
                                No
                            </td>
                            <td style="text-align: left">
                                Date
                            </td>
                            <td style="text-align: left">
                                Number
                            </td>
                            <td style="text-align: left">
                                Cashier
                            </td>
                            <td style="text-align: center">
                                Member
                            </td>
                            <td style="text-align: center">
                                Total
                            </td>
                            <td style="text-align: center">
                                State
                            </td>
                        </tr>
                        <t t-set="number" t-value="1"/>
                        <t t-foreach="getRecords" t-as="record">
                            <OrderHistoryLocalRow record="record"
                                number="number"
                                t-att-class="{'highlight': getHighlight}"
                                selectedRecord="state.selectedRecord"
                                detailIsShown="state.detailIsShown"
                                t-on-click-record="clickRecord(record)"/> 
                            <t t-set="number" t-value="number + 1"/>
                        </t>
                    </table>
                    <t t-else="">
                        <h1 class="loading-member-record" style="text-align: center;">
                            <span>... NOT FOUND ANY LOCAL ORDER LOG FROM LOCAL STORAGE ...</span>
                        </h1>
                    </t>
                </t>

            </div>
        </div>
    </t>

</templates>
