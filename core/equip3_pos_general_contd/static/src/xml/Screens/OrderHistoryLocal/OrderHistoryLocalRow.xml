<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="OrderHistoryLocalRow" owl="1">
        <t t-set="record" t-value="props.record"/>
        <tr class="receipt-line" t-on-click="trigger('click-record', {record: record})">
            <td class="td-sequence" style="text-align: center">
                <span><t t-esc="record.sync_sequence_number"/></span>
            </td>
            <td style="text-align: left">
                <t t-esc="getDate(record)"/> 
            </td>
            <td style="text-align: left">
                <t t-esc="record.name"/>
            </td>
            <td style="text-align: left">
                <t t-esc="getCashier(record)"/>
            </td>
            <td style="text-align: center">
                <t t-esc="getCustomer(record)"/>
            </td>
            <td style="text-align: center">
                <t t-esc="env.pos.format_currency(record.amount_total)"/>
            </td>
            <td style="text-align: center">
                <t t-set="sync_state" t-value="getSyncState(record)"/>
                <t t-if="sync_state == 'Not Sync'">
                    <span style="color:red;">Not Sync</span>
                </t>
                <t t-if="sync_state == 'Synced'">
                    <span style="color:black;">Synced</span>
                </t>
            </td>

        </tr>
    </t>

</templates>
