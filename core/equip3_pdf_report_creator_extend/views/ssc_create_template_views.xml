<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="inherit_ssc_create_template_form_view">
            <field name="name">inherit_ssc_create_template_form_view</field>
            <field name="model">ssc.create.template</field>
            <field name="inherit_id" ref="pdf_report_creator.ssc_create_template_form_view"/>
            <field name="arch" type="xml">
                <field name="model_id" position="after">
                    <field name="apply_to_menu" attrs = "{'invisible':[('state','in',['draft'])]}" readonly="1" force_save="1"/>
                </field>
                <header position="replace">
                    <header>
                        <button string="Apply" name="action_to_apply" type="object" class="oe_highlight" attrs = "{'invisible':[('state','in',['applied'])]}"/>
                        <button  string="Set to Draft" name="set_to_draft" type="object" class="oe_highlight" attrs = "{'invisible':[('state','in',['draft'])]}"/>
                        <field name="state" widget="statusbar" readonly="1"/>
                    </header>
                </header>
            </field>
            
        </record>



    </data>
</odoo>
