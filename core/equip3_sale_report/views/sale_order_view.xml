<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_margin_pivot" model="ir.ui.view">
        <field name="name">sale.order.margin.pivot</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <pivot string="Sales Margin Pivot Analysis">
                <field name="discount_amt_before" invisible="1"/>
                <field name="discount_amt_line_before" invisible="1"/>
                <field name="discount_amount" invisible="1"/>
                <field name="distance_btn_2_loc" invisible="1"/>
                <field name="inter_transfer_count" invisible="1"/>
                <field name="manual_currency_exchange_rate" invisible="1"/>
                <field name="margin_percent" invisible="1"/>
<!--                <field name="mp_amount_total" invisible="1"/>-->
                <field name="order_credit_points" invisible="1"/>
                <field name="order_line_count" invisible="1"/>
                <field name="recurring_interval" invisible="1"/>
<!--                <field name="mp_expected_income" invisible="1"/>-->
<!--                <field name="mp_wallet_total" invisible="1"/>-->
<!--                <field name="mp_delivery_weight" invisible="1"/>-->
                <field name="loyalty_point_credit" invisible="1"/>
                <field name="so_number" invisible="1"/>
                <field name="team_id" type="col"/>
                <field name="date_order" interval="month" type="row"/>
                <field name="margin" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="sale_order_margin_graph" model="ir.ui.view">
        <field name="name">sale.order.margin.graph</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <graph string="Sales Margin Pivot Analysis" type="line">
                <field name="date_order" type="row" interval="month"/>
                <field name="margin" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="sh_sale_order_wizard_view" model="ir.ui.view">
        <field name="name">sale.order.report</field>
        <field name="model">sale.order.report</field>
        <field name="inherit_id" ref="sh_sale_reports.sh_sale_order_wizard_view"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='generate_report_data']" position="attributes">
                <attribute name="string">Print</attribute>
            </xpath>
        </field>
    </record>

    <record id="sh_sale_order_wizard_view_inheritance" model="ir.ui.view">
        <field name="name">sh.sale.analysis.wizard</field>
        <field name="model">sh.sale.analysis.wizard</field>
        <field name="inherit_id" ref="sh_sale_reports.sh_customer_sales_analysis_wizard"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sh_status']" position="replace">
                <field name="sh_status_ids" widget="radio"/>
            </xpath>
        </field>
    </record>
    <record id="sh_sale_product_indent_wizard_inheritance" model="ir.ui.view">
        <field name="name">sh.sale.product.indent.wizard</field>
        <field name="model">sh.sale.product.indent.wizard</field>
        <field name="inherit_id" ref="sh_sale_reports.sh_sale_product_indent_wizard"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sh_status']" position="replace">
                <field name="sh_status_ids" widget="radio"/>
            </xpath>
        </field>
    </record>
</odoo>
