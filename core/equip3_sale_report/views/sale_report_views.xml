<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <menuitem
        id="sale_reporting_menu"
        name="Sales Analysis"
        parent="sale.menu_sale_report"
        sequence="2"/>

    <menuitem
        id="sale_inv_menu"
        name="Sales Invoice Analysis"
        parent="sale.menu_sale_report"
        sequence="3"/>

    <menuitem
        id="sale_cust_menu"
        name="Customers Analysis"
        parent="sale.menu_sale_report"
        sequence="4"/>

    <menuitem
        id="sale_prod_menu"
        name="Products Analysis"
        parent="sale.menu_sale_report"
        sequence="5"/>

    <record id="sale.menu_report_product_all" model="ir.ui.menu">
        <field name="name">Sales Pivot Analysis</field>
        <field name="parent_id" ref="sale_reporting_menu"/>
        <field name="sequence">1</field>
    </record>

    <record model="ir.ui.menu" id="sh_sale_reports.sh_customer_sales_analysis_report_menuitem">
        <field name="parent_id" ref="sale_cust_menu"/>
        <field name="sequence">1</field>
    </record>

    <record id="sh_sale_reports.sh_customer_sales_analysis_report_menuitem" model="ir.ui.menu">
        <field name="parent_id" ref="sale_cust_menu"/>
        <field name="sequence">4</field>
    </record>

    <record model="ir.ui.menu" id="sh_sale_reports.sh_sale_details_report_menuitem">
        <field name="parent_id" ref="sale_reporting_menu"/>
        <field name="sequence">1</field>
    </record>

    <record model="ir.ui.menu" id="sh_sale_reports.sh_payment_report_wizard_menuitem">
        <field name="parent_id" ref="sale_inv_menu"/>
        <field name="sequence">2</field>
    </record>

    <record model="ir.ui.menu" id="sh_sale_reports.sale_order_day_wise_report">
        <field name="parent_id" ref="sale_reporting_menu"/>
        <field name="sequence">3</field>
    </record>

    <record model="ir.ui.menu" id="sh_sale_reports.sh_sale_report_salesperson_menuitem">
        <field name="parent_id" ref="sale_reporting_menu"/>
        <field name="sequence">4</field>
    </record>   

    <record model="ir.ui.menu" id="sh_sale_reports.sh_tc_top_customer_wizard_menuitem">
        <field name="parent_id" ref="sale_cust_menu"/>
        <field name="sequence">5</field>
    </record>

    <record model="ir.ui.menu" id="sh_sale_reports.sh_tsp_view_top_selling_products">
        <field name="parent_id" ref="sale_prod_menu"/>
        <field name="sequence">1</field>
    </record>

    <record model="ir.ui.menu" id="sh_sale_reports.sh_tsp_update_top_selling_products">
        <field name="parent_id" ref="sale_prod_menu"/>
        <field name="sequence">2</field>
    </record>

    <record model="ir.ui.menu" id="sh_sale_reports.sh_sale_invoice_summary_report_menuitem">
        <field name="parent_id" ref="sale_inv_menu"/>
        <field name="sequence">1</field>
    </record>

    <record model="ir.ui.menu" id="sh_sale_reports.sh_sale_product_indent_report_menuitem">
        <field name="parent_id" ref="sale_prod_menu"/>
        <field name="sequence">5</field>
    </record>
    
    <record id="sh_sale_reports.sh_sales_product_profit_report_menuitem" model="ir.ui.menu">
        <field name="parent_id" ref="sale_prod_menu"/>
        <field name="sequence">3</field>
    </record>

    <record id="sh_sale_reports.sh_sale_by_category_report_menuitem" model="ir.ui.menu">
        <field name="parent_id" ref="sale_prod_menu"/>
        <field name="sequence">4</field>
    </record>

    <record id="sh_sale_reports.sh_custom_sale_details_report_menu" model="ir.ui.menu">
        <field name="active" eval="False"/>
    </record>

    <record id="action_order_report_margin" model="ir.actions.act_window">
        <field name="name">Sales Margin Pivot Analysis</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">graph,pivot</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'graph', 'view_id': ref('equip3_sale_report.sale_order_margin_graph')}),
            (0, 0, {'view_mode': 'pivot', 'view_id': ref('equip3_sale_report.sale_order_margin_pivot')}),
        ]"/>
    </record>

    <menuitem id="sale_margin_analysis_reports_menuitem" action="action_order_report_margin" parent="sale_reporting_menu" sequence="1" />

    <record id="sale_margin_report_actions" model="ir.actions.act_window">
        <field name="name">Sales Margin Report</field>
        <field name="res_model">sale.margin.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="sale_margin_report_menuitem" action="sale_margin_report_actions" groups="sales_team.group_sale_salesman_all_leads" parent="sale_reporting_menu" sequence="2" />

    <record id="ks_sales_forecast.ks_forecast_menuitem" model="ir.ui.menu">
        <field name="parent_id" ref="sale.sale_menu_root"/>
        <field name="sequence">4</field>
    </record>

    <record id="cust_credit_limit_report_actions" model="ir.actions.act_window">
        <field name="name">Customer Credit Limit Analysis</field>
        <field name="res_model">cust.credit.limit.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="cust_credit_limit_report_menuitem" action="cust_credit_limit_report_actions" parent="equip3_sale_report.sale_cust_menu"/>

    <record id="view_order_product_pivot_inherit" model="ir.ui.view">
        <field name="name">sale.report.pivot.inherit</field>
        <field name="model">sale.report</field>
        <field name="inherit_id" ref="sale.view_order_product_pivot"/>
        <field name="arch" type="xml">
            <field name="team_id" position="before">
                <field name="discount" invisible="1"/>
            </field>
        </field>
    </record>

</odoo>
