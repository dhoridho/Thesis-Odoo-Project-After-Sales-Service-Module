<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="xls_sales_margin_view" model="ir.ui.view">
        <field name="name">xls.sales.margin.view</field>
        <field name="model">sales.margin.xls</field>
        <field name="arch" type="xml">
            <form string="Xls Report">
                <group>
                    <field name="excel_file" invisible="1" />
                    <field name="file_name" readonly="1" filename="excel_file" invisible="1" />
                    <button name="download_report" string="Sale Margin Xlsx" type="object" class="oe_highlight" />
                </group>
                <footer>
                    <button string="Close" class="oe_highlight" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="sale_margin_report_wizard" model="ir.ui.view">
        <field name="name">sale.margin.report.wizard.form</field>
        <field name="model">sale.margin.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Sale Details">
                <group>
                    <field name="partner_ids" options="{'no_create': True}" widget="many2many_tags" domain="[('is_customer', '=', True)]"/>
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="company_ids" options="{'no_create': True}" widget="many2many_tags" groups="base.group_multi_company" invisible="1"/>
                    <field name="branch_id"  options="{'no_create': True}"/>
                </group>
                <footer>
                    <button name="print_report" string="Print" type="object" class="btn-primary" />
                    <button name="print_sale_margin_xls_report" string="Print Xls" type="object" class="oe_highlight" />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
