<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sh_sale_by_category_action" model="ir.actions.report">
        <field name="name">Sale By Product Category</field>
        <field name="model">sh.sale.category.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">equip3_sale_report.sh_sale_by_category_doc</field>
        <field name="print_report_name">'Sale By Product Category'</field>
    </record>

    <template id="sh_sale_by_category_doc_report_external_layout">
        <!-- Multicompany -->
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <t t-call="equip3_sale_report.sh_sale_by_category_doc_report_header"/>
        <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
            <t t-raw="0"/>
        </div>
        <t t-call="general_template.templates_footer"/>
    </template>

    <template id="sh_sale_by_category_doc_report_header">
        <div class="header">
            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                <tbody>
                    <tr>
                        <td>
                            <center>
                                <table border="0" cellpadding="0" cellspacing="0" style="padding:0px 20px 0px 20px; margin:0; background:#fff; line-height:20px; vertical-align:middle; float:none;" width="100%">
                                    <tr>
                                        <td align="left" colspan="2" t-attf-style="vertical-align:middle; float:none; color:#{text_color or '#ffffff'}; padding:0 0px;" valign="top">
                                            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                <tr>
                                                    <td align="left" style="color:#4D4D4F; padding: 0px 15px; border-right: 1px solid #D4D1D1; width:10%; vertical-align:middle; float:none;" valign="middle">
                                                        <img style="max-height:50px; vertical-align: top; float:none;" t-att-src="'data:image/png;base64,%s'% to_text(o.company_id.logo)" t-if="o.company_id.logo"/>
                                                        <br/>
                                                    </td>
                                                    <td style="padding:15px 0px 0px 15px; width:30%" valign="top">
                                                        <p t-attf-style="text-transform:capitalize; color: #{theme_color or '#ffffff'}; font-weight:bold;margin:0; margin-bottom:5px;">Address</p>
                                                        <t t-call="general_template.templates_company_details"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </center>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </template>

    <template id="sh_sale_by_category_doc_report">
        <t t-call="equip3_sale_report.sh_sale_by_category_doc_report_external_layout">
            <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color"/>
            <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color"/>
            <t t-set="company_color" t-value="o.company_id and o.company_id.company_color"/>
            <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color"/>
            <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color"/>
            <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color"/>
            <t t-set="text_color" t-value="o.company_id and o.company_id.text_color"/>
            <div class="page" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                <div class="oe_structure" />
                <div t-attf-style="background-color:#f2f2f2;border-bottom:1px solid #{theme_color or '#ececec'}; overflow: visible; margin-bottom: 20px;"/>
                <div class="col-sm-12" align="center">
                    <div class="text-center">
                        <b>
                            <h2>Sales By Product Category</h2>
                        </b>
                        <b>
                            <span t-field="o.sh_start_date" t-options="{'widget': 'date', 'format': 'dd MMMM yyyy'}" />
                            -
                            <span t-field="o.sh_end_date" t-options="{'widget': 'date', 'format': 'dd MMMM yyyy'}" />
                        </b>
                    </div>
                    <div>
                        <table border="0" cellpadding="0" cellspacing="0" t-attf-style="color:#fff; text-transform:capitalize; border: 1px solid #{theme_color or '#000000'};" width="100%">
                            <tr t-attf-style="color: #{theme_text_color or '#FFFFFF'}; background-color: #{theme_color or '#000000'};">
                                <td t-attf-style="font-weight:bold;">
                                    <div style="padding:9px 15px">
                                        <span>Printed On </span>
                                        <br/>
                                        <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <hr/>
                    <t t-if="o.category_order_dic">
                        <t t-foreach="o.category_order_dic" t-as="category">
                            <br/>
                            <left>
                                <b>
                                    <span t-esc="category.categ" />
                                </b>
                            </left>
                            <table style="margin-top: 10px;" class="table table-striped">
                                <tr t-attf-style="color: #{theme_text_color or '#FFFFFF'}; background-color: #{theme_color or '#000000'};">
                                    <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 18px;">
                                        <b>Number</b>
                                    </td>
                                    <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 18px;">
                                        <b>Date</b>
                                    </td>
                                    <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 18px;">
                                        <b>Product</b>
                                    </td>
                                    <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 18px;">
                                        <b>Qty</b>
                                    </td>
                                    <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 18px;">
                                        <b>Price</b>
                                    </td>
                                    <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 18px;">
                                        <b>UoM</b>
                                    </td>
                                    <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 18px;">
                                        <b>Tax</b>
                                    </td>
                                    <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 18px;">
                                        <b>Subtotal</b>
                                    </td>
                                    <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 18px;">
                                        <b>Total</b>
                                    </td>
                                </tr>
                                <t t-set="total_qty" t-value="0" />
                                <t t-set="total_price" t-value="0" />
                                <t t-set="total_tax" t-value="0" />
                                <t t-set="total_subtotal" t-value="0" />
                                <t t-set="total" t-value="0" />
                                <tr t-foreach="category.list_product" t-as="line">
                                    <td style="border: 1px solid black;">
                                        <span t-field="line.order_number"/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-field="line.order_date"/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-field="line.product_name"/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-field="line.qty"/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-esc="line.price" t-options='{"widget": "float", "precision": 2}'/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-field="line.uom"/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-esc="line.tax" t-options='{"widget": "float", "precision": 2}'/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-esc="line.subtotal" t-options='{"widget": "float", "precision": 2}'/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-esc="line.total" t-options='{"widget": "float", "precision": 2}'/>
                                    </td>
                                    <t t-set="total_qty" t-value="total_qty + line.qty" />
                                    <t t-set="total_price" t-value="total_price + line.price" />
                                    <t t-set="total_tax" t-value="total_tax + line.tax" />
                                    <t t-set="total_subtotal" t-value="total_subtotal + line.subtotal" />
                                    <t t-set="total" t-value="total + line.total" />
                                </tr>
                                <tr>
                                    <td style="border: 1px solid black;">
                                    </td>
                                    <td style="border: 1px solid black;">
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <strong>Total</strong>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-esc="sum(category.list_product.mapped('qty'))" t-options='{"widget": "float", "precision": 2}'/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-esc="sum(category.list_product.mapped('price'))" t-options='{"widget": "float", "precision": 2}'/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                    </td>
                                    <td style="border: 1px solid black;">
                                       <span t-esc="sum(category.list_product.mapped('tax'))" t-options='{"widget": "float", "precision": 2}'/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-esc="sum(category.list_product.mapped('subtotal'))" t-options='{"widget": "float", "precision": 2}'/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-esc="sum(category.list_product.mapped('total'))" t-options='{"widget": "float", "precision": 2}'/>
                                    </td>
                                </tr>
                            </table>
                        </t>
                    </t>
                </div>
            </div>
        </t>
    </template>

    <template id="sh_sale_by_category_doc">
        <t t-call="web.html_container">
            <t t-as="o" t-foreach="docs">
                <t t-call="equip3_sale_report.sh_sale_by_category_doc_report"/>
            </t>
        </t>
    </template>
</odoo>