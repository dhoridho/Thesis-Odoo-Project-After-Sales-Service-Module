<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sale_detail_report_action" model="ir.actions.report">
        <field name="name">Sales Details Report</field>
        <field name="model">sh.sale.details.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">equip3_sale_report.sale_details_report_doc</field>
        <field name="report_file">equip3_sale_report.sale_details_report_doc</field>
        <field name="print_report_name">'Sales Details Report'</field>
    </record>

    <template id="sale_detail_report_template_external_layout">
        <!-- Multicompany -->
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <t t-call="equip3_sale_report.sale_detail_report_template_header"/>
        <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
            <t t-raw="0"/>
        </div>
        <t t-call="general_template.templates_footer"/>
    </template>

    <template id="sale_detail_report_template_header">
        <div class="header">
            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                <tbody>
                    <tr>
                        <td>
                            <center>
                                <table border="0" cellpadding="0" cellspacing="0" style="padding:0px 20px 0px 20px; margin:0; background:#fff; line-height:20px; vertical-align:middle; float:none;" width="100%">
                                    <tr>
                                        <td align="left" colspan="2" t-attf-style="vertical-align:middle; float:none; color:#{text_color or '#ffffff'}; padding:0 0px;" valign="top">
                                            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                <tr>
                                                    <td align="left" style="color:#4D4D4F; padding: 0px 15px; border-right: 1px solid #D4D1D1; width:10%; vertical-align:middle; float:none;" valign="middle">
                                                        <img style="max-height:50px; vertical-align: top; float:none;" t-att-src="'data:image/png;base64,%s'% to_text(o.company_id.logo)" t-if="o.company_id.logo"/>
                                                        <br/>
                                                    </td>
                                                    <td style="padding:15px 0px 0px 15px; width:30%" valign="top">
                                                        <p t-attf-style="text-transform:capitalize; color: #{theme_color or '#ffffff'}; font-weight:bold;margin:0; margin-bottom:5px;">Address</p>
                                                        <t t-call="general_template.templates_company_details"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </center>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </template>

    <template id="sale_details_report">
        <t t-call="equip3_sale_report.sale_detail_report_template_external_layout">
            <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color"/>
            <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color"/>
            <t t-set="company_color" t-value="o.company_id and o.company_id.company_color"/>
            <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color"/>
            <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color"/>
            <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color"/>
            <t t-set="text_color" t-value="o.company_id and o.company_id.text_color"/>
            <div class="page" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                <div class="oe_structure" />
                <div t-attf-style="background-color:#f2f2f2;border-bottom:1px solid #{theme_color or '#ececec'}; overflow: visible; margin-bottom: 20px;"/>
                <div class="col-sm-12" align="center">
                    <div class="text-center">
                        <h2>Sale Details</h2>

                        <strong>
                            <span t-field="o.start_date" t-options="{'widget': 'date', 'format': 'dd MMMM yyyy'}" />
                            -
                            <span t-field="o.end_date" t-options="{'widget': 'date', 'format': 'dd MMMM yyyy'}" />
                        </strong>
                    </div>
                    <div>
                        <table border="0" cellpadding="0" cellspacing="0" t-attf-style="color:#fff; text-transform:capitalize; border: 1px solid #{theme_color or '#000000'};" width="100%">
                            <tr t-attf-style="color: #{theme_text_color or '#FFFFFF'}; background-color: #{theme_color or '#000000'};">
                                <td t-attf-style="font-weight:bold;">
                                    <div style="padding:9px 15px">
                                        <span>Printed On </span>
                                        <br/>
                                        <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <!-- Orderlines -->
                    <div class="text-left" style="margin-top: 10px;">
                        <h5>Products</h5>
                    </div>
                    <table style="margin-top: 10px;" class="table table-striped">
                        <tr t-attf-style="color: #{theme_text_color or '#FFFFFF'}; background-color: #{theme_color or '#000000'};">
                            <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 18px;">
                                <b>Product</b>
                            </td>
                            <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 18px;">
                                <b>Quantity</b>
                            </td>
                            <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 18px;">
                                <b>Price Unit</b>
                            </td>
                        </tr>
                        <tr t-foreach="o.products" t-as="line">
                            <t t-set="internal_reference" t-value="line.code and '[%s] ' % line.code or ''" />
                            <td>
                                <t t-esc="internal_reference" />
                                <span t-field="line.product_name"/>
                            </td>
                            <td>
                                <span t-field="line.quantity" />
                                <t t-if='line.uom != "Unit(s)"'>
                                    <span t-field='line.uom' />
                                </t>
                            </td>
                            <td>
                                <span t-field='line.price_unit' />
                                <t t-if='line.discount != 0'>
                                    Disc:
                                    <span t-field='line.discount' />
                                    %
                                </t>
                            </td>
                        </tr>
                    </table>
                    <br />

                    <div class="text-left">
                        <h5>Payments</h5>
                    </div>
                    <table style="margin-top: 10px;" class="table table-striped">
                        <tr t-attf-style="color: #{theme_text_color or '#FFFFFF'}; background-color: #{theme_color or '#000000'};">
                            <td align="center" style="font-family: 'Helvetica'; font-size: 18px;">
                                <b>Name</b>
                            </td>
                            <td align="center" style="font-family: 'Helvetica'; font-size: 18px;">
                                <b>Total</b>
                            </td>
                        </tr>
                        <tr t-foreach="o.payments" t-as="payment">
                            <td>
                                <span t-field="payment.name" />
                            </td>
                            <td>
                                <span t-field="payment.total" t-options="{'widget': 'float', 'precision': o.currency_precision}" />
                            </td>
                        </tr>
                    </table>
                    <br />
                    <div class="text-left">
                        <h5>Taxes</h5>
                    </div>
                    <table style="margin-top: 10px;" class="table table-striped">
                        <tr t-attf-style="color: #{theme_text_color or '#FFFFFF'}; background-color: #{theme_color or '#000000'};">
                            <td align="center" style="font-family: 'Helvetica'; font-size: 18px;">
                                <b>Name</b>
                            </td>
                            <td align="center" style="font-family: 'Helvetica'; font-size: 18px;">
                                <b>Total</b>
                            </td>
                        </tr>
                        <tr t-foreach="o.taxes" t-as="tax">
                            <td>
                                <span t-field="tax.name" />
                            </td>
                            <td>
                                <span t-field="tax.total" t-options="{'widget': 'float', 'precision': o.currency_precision}" />
                            </td>
                        </tr>
                    </table>
                    <br />
                    <br />
                    <div class="text-right">
                        <strong >
                            Total:
                            <span t-field="o.total_paid" t-options="{'widget': 'float', 'precision': o.currency_precision}" />
                        </strong>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="sale_details_report_doc">
        <t t-call="web.html_container">
            <t t-as="o" t-foreach="docs">
                <t t-call="equip3_sale_report.sale_details_report"/>
            </t>
        </t>
    </template>
</odoo>