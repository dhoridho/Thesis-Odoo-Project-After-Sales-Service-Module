<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="cus_sales_analysis_actions" model="ir.actions.report">
        <field name="name">Customer Sales Analysis</field>
        <field name="model">sh.sale.analysis.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">equip3_sale_report.cus_sale_analysis_docs</field>
        <field name="print_report_name">'Customer Sales Analysis'</field>
        <field name="paperformat_id" ref="sh_sale_reports.paperformat_customer_sale_analysis" />
    </record>

    <template id="cus_sale_analysis_doc_external_layout">
        <!-- Multicompany -->
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <t t-call="equip3_sale_report.cus_sale_analysis_doc_header"/>
        <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
            <t t-raw="0"/>
        </div>
        <t t-call="general_template.templates_footer"/>
    </template>

    <template id="cus_sale_analysis_doc_header">
        <div class="header">
            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                <tbody>
                    <tr>
                        <td>
                            <center>
                                <table border="0" cellpadding="0" cellspacing="0" style="padding:0px 20px 0px 20px; margin:0; background:#fff; line-height:20px; vertical-align:middle; float:none;" width="100%">
                                    <tr>
                                        <td align="left" colspan="2" t-attf-style="vertical-align:middle; float:none; color:#{text_color or '#ffffff'}; padding:0 0px;" valign="top">
                                            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                <tr>
                                                    <td align="left" style="color:#4D4D4F; padding: 0px 15px; border-right: 1px solid #D4D1D1; width:10%; vertical-align:middle; float:none;" valign="middle">
                                                        <img style="max-height:50px; vertical-align: top; float:none;" t-att-src="'data:image/png;base64,%s'% to_text(o.company_id.logo)" t-if="o.company_id.logo"/>
                                                        <br/>
                                                    </td>
                                                    <td style="padding:15px 0px 0px 15px; width:30%" valign="top">
                                                        <p t-attf-style="text-transform:capitalize; color: #{theme_color or '#ffffff'}; font-weight:bold;margin:0; margin-bottom:5px;">Address</p>
                                                        <t t-call="general_template.templates_company_details"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </center>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </template>

    <template id="cus_sale_analysis_doc_2">
        <t t-call="equip3_sale_report.cus_sale_analysis_doc_external_layout">
            <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color"/>
            <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color"/>
            <t t-set="company_color" t-value="o.company_id and o.company_id.company_color"/>
            <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color"/>
            <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color"/>
            <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color"/>
            <t t-set="text_color" t-value="o.company_id and o.company_id.text_color"/>
            <div class="page" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                <div class="oe_structure" />
                <div t-attf-style="background-color:#f2f2f2;border-bottom:1px solid #{theme_color or '#ececec'}; overflow: visible; margin-bottom: 20px;"/>
                <div class="row">
                    <div class="col-12 mx-auto">
                        <div class="text-center">
                            <b>
                                <h4>Customer Sales Analysis</h4>
                            </b>

                            <b>
                                <span t-field="o.sh_start_date" t-options="{'widget': 'date', 'format': 'dd MMMM yyyy'}" />
                                -
                                <span t-field="o.sh_end_date" t-options="{'widget': 'date', 'format': 'dd MMMM yyyy'}" />
                            </b>
                        </div>
                    </div>
                </div>
                <br />
                <table border="0" cellpadding="0" cellspacing="0" t-attf-style="color:#fff; text-transform:capitalize; border: 1px solid #{theme_color or '#000000'};" width="100%">
                    <tr t-attf-style="color: #{theme_text_color or '#FFFFFF'}; background-color: #{theme_color or '#000000'};">
                        <td t-attf-style="font-weight:bold;">
                            <div style="padding:9px 15px; margin_right: 50px">
                                <span>Printed On </span>
                                <br/>
                                <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                            </div>
                        </td>
                        <td t-attf-style="font-weight:bold;">
                            <div style="padding:9px 15px">
                                <span>Status: </span>
                                <br/>
                                <span t-field="o.sh_status_ids"/>
                            </div>
                        </td>
                    </tr>
                </table>
                <hr/>
                <br />
                <t t-if="o.sale_analysis_dic">
                    <t t-if="o.report_by == 'order'">
                        <t t-foreach="o.sale_analysis_dic" t-as="user">
                            <left>
                                <b>
                                    <span t-esc="user.saleperson" />
                                </b>
                            </left>
                            <t t-set="total_sales_amount" t-value="0" />
                            <t t-set="total_amount_paid" t-value="0" />
                            <t t-set="total_balance" t-value="0" />
                            <table style="margin-top: 10px;" class="table table-striped">
                                <tr t-attf-style="color: #{theme_text_color or '#FFFFFF'}; background-color: #{theme_color or '#000000'};">
                                    <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>Order Number</b>
                                    </td>
                                    <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>Order Date</b>
                                    </td>
                                    <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>Salesperson</b>
                                    </td>
                                    <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>Sales Amount</b>
                                    </td>
                                    <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>Amount Paid</b>
                                    </td>
                                    <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>Balance</b>
                                    </td>
                                </tr>
                                <t t-foreach="user.list_order" t-as="order">
                                    <tr>
                                        <td style="border: 1px solid black;">
                                            <span t-field="order.order_number" />
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <span t-field="order.order_date" t-options='{"widget": "date"}' />
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <span t-field="order.salesperson" />
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <span t-field="order.sale_amount" />
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <span t-field="order.paid_amount"/>
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <span t-field="order.balance_amount"/>
                                        </td>
                                        <t t-set="total_sales_amount" t-value="total_sales_amount + order.sale_amount" />
                                        <t t-set="total_amount_paid" t-value="total_amount_paid + order.paid_amount" />
                                        <t t-set="total_balance" t-value="total_balance + order.balance_amount" />
                                    </tr>
                                </t>
                                <tr>
                                    <td style="border:1px solid black;"></td>
                                    <td style="border:1px solid black;"></td>
                                    <td style="border: 1px solid black;">
                                        <b>Total</b>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-esc="total_sales_amount"/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-esc="total_amount_paid"/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-esc="total_balance"/>
                                    </td>
                                </tr>
                            </table>
                        </t>
                    </t>
                    <t t-elif="o.report_by == 'product'">
                        <t t-foreach="o.sale_analysis_dic" t-as="user">
                            <left>
                                <b>
                                    <span t-esc="user.saleperson" />
                                </b>
                            </left>
                            <t t-set="total_tax" t-value="0" />
                            <t t-set="total_subtotal" t-value="0" />
                            <table style="margin-top: 10px;" class="table table-striped">
                                <tr t-attf-style="color: #{theme_text_color or '#FFFFFF'}; background-color: #{theme_color or '#000000'};">
                                    <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>Order Number</b>
                                    </td>
                                    <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>Order Date</b>
                                    </td>
                                    <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>Product</b>
                                    </td>
                                    <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>Price</b>
                                    </td>
                                    <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>Qty</b>
                                    </td>
                                    <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>Disc</b>
                                    </td>
                                    <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>Tax</b>
                                    </td>
                                    <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>Subtotal</b>
                                    </td>
                                </tr>
                                <t t-foreach="user.list_product" t-as="order">
                                    <tr>
                                        <td style="border: 1px solid black;">
                                            <span t-field="order.order_number" />
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <span t-field="order.order_date" t-options='{"widget": "date"}' />
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <span t-field="order.product_name" />
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <span t-field="order.price"/>
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <span t-field="order.qty"/>
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <span t-field="order.discount"/>
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <span t-field="order.tax"/>
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <span t-field="order.subtotal"/>
                                        </td>
                                        <t t-set="total_tax" t-value="total_tax + order.tax" />
                                        <t t-set="total_subtotal" t-value="total_subtotal + order.subtotal" />
                                    </tr>
                                </t>
                                <tr>
                                    <td style="border:1px solid black;"></td>
                                    <td style="border:1px solid black;"></td>
                                    <td style="border:1px solid black;"></td>
                                    <td style="border:1px solid black;"></td>
                                    <td style="border:1px solid black;"></td>
                                    <td style="border: 1px solid black;">
                                        <b>Total</b>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-esc="total_tax"/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-esc="total_subtotal"/>
                                    </td>
                                </tr>
                            </table>
                        </t>
                    </t>
                </t>
            </div>
        </t>
    </template>

    <template id="cus_sale_analysis_docs">
        <t t-call="web.html_container">
            <t t-as="o" t-foreach="docs">
                <t t-call="equip3_sale_report.cus_sale_analysis_doc_2"/>
            </t>
        </t>
    </template>
</odoo>