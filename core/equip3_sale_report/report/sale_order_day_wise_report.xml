<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sh_sale_reports.action_report_sale_order_day_wise_report" model="ir.actions.report">
        <field name="report_name">equip3_sale_report.rpt_sale_order_day_wise_new</field>
        <field name="report_file">equip3_sale_report.rpt_sale_order_day_wise_new</field>
    </record>

    <template id="sale_order_day_wise_report_template_external_layout">
        <!-- Multicompany -->
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="doc.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <t t-call="equip3_sale_report.sale_order_day_wise_report_template_header"/>
        <div class="article o_report_layout_standard" t-att-data-oe-model="o and doc._name" t-att-data-oe-id="o and doc.id">
            <t t-raw="0"/>
        </div>
        <t t-call="general_template.templates_footer"/>
    </template>

    <template id="sale_order_day_wise_report_template_header">
        <div class="header">
            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                <tbody>
                    <tr>
                        <td>
                            <center>
                                <table border="0" cellpadding="0" cellspacing="0" style="padding:0px 20px 0px 20px; margin:0; background:#fff; line-height:20px; vertical-align:middle; float:none;" width="100%">
                                    <tr>
                                        <td align="left" colspan="2" t-attf-style="vertical-align:middle; float:none; color:#{text_color or '#ffffff'}; padding:0 0px;" valign="top">
                                            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                <tr>
                                                    <td align="left" style="color:#4D4D4F; padding: 0px 15px; border-right: 1px solid #D4D1D1; width:10%; vertical-align:middle; float:none;" valign="middle">
                                                        <img style="max-height:50px; vertical-align: top; float:none;" t-att-src="'data:image/png;base64,%s'% to_text(o.company_id.logo)" t-if="o.company_id.logo"/>
                                                        <br/>
                                                    </td>
                                                    <td style="padding:15px 0px 0px 15px; width:30%" valign="top">
                                                        <p t-attf-style="text-transform:capitalize; color: #{theme_color or '#ffffff'}; font-weight:bold;margin:0; margin-bottom:5px;">Address</p>
                                                        <t t-call="general_template.templates_company_details"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </center>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </template>

    <template id="rpt_sale_order_day_wise_inherit" inherit_id="sh_sale_reports.rpt_sale_order_day_wise">
        <xpath expr="//t[@t-call='web.html_container']" position="replace">
            <t t-call="equip3_sale_report.sale_order_day_wise_report_template_external_layout">
                <t t-set="theme_color" t-value="doc.company_id and doc.company_id.theme_color"/>
                <t t-set="theme_text_color" t-value="doc.company_id and doc.company_id.theme_text_color"/>
                <t t-set="company_color" t-value="doc.company_id and doc.company_id.company_color"/>
                <t t-set="company_address_color" t-value="doc.company_id and doc.company_id.company_address_color"/>
                <t t-set="customer_color" t-value="doc.company_id and doc.company_id.customer_color"/>
                <t t-set="customer_address_color" t-value="doc.company_id and doc.company_id.customer_address_color"/>
                <t t-set="text_color" t-value="doc.company_id and doc.company_id.text_color"/>
                <div class="page" t-att-style="'font-family:'+doc.company_id.font_id.family+';font-size:'+str(doc.company_id.font_size)+'px;'">
                    <div class="oe_structure" />
                    <div t-attf-style="background-color:#f2f2f2;border-bottom:1px solid #{theme_color or '#ececec'}; overflow: visible; margin-bottom: 20px;"/>
                    <div class="col-sm-12" align="center">
                        <h3><span>Sales Order - Product Sold Day Wise </span></h3>
                        <strong>
                            <t t-esc="doc.start_date" t-options="{'widget': 'date', 'format': 'dd MMMM yyyy'}" />
                            -
                            <t t-esc="doc.end_date" t-options="{'widget': 'date', 'format': 'dd MMMM yyyy'}" />
                        </strong>
                        <table border="0" cellpadding="0" cellspacing="0" t-attf-style="color:#fff; text-transform:capitalize; border: 1px solid #{theme_color or '#000000'};" width="100%">
                            <tr t-attf-style="color: #{theme_text_color or '#FFFFFF'}; background-color: #{theme_color or '#000000'};">
                                <td t-attf-style="font-weight:bold;">
                                    <div style="padding:9px 15px">
                                        <span>Printed On </span>
                                        <br/>
                                        <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                                    </div>
                                </td>
                            </tr>
                        </table>
                        <table style="margin-top: 10px;" class="table table-striped">
                            <tr t-attf-style="color: #{theme_text_color or '#FFFFFF'}; background-color: #{theme_color or '#000000'};">
                                <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 16px;">
                                    <b>Product</b>
                                </td>
                                <td align="center" width="10%" style="font-family: 'Helvetica'; font-size: 16px;">
                                    <b>Monday</b>
                                </td>
                                <td align="center" width="10%" style="font-family: 'Helvetica'; font-size: 16px;">
                                    <b>Tuesday</b>
                                </td>
                                <td align="center" width="10%" style="font-family: 'Helvetica'; font-size: 16px;">
                                    <b>Wednesday</b>
                                </td>
                                <td align="center" width="10%" style="font-family: 'Helvetica'; font-size: 16px;">
                                    <b>Thursday</b>
                                </td>
                                <td align="center" width="10%" style="font-family: 'Helvetica'; font-size: 16px;">
                                    <b>Friday</b>
                                </td>
                                <td align="center" width="10%" style="font-family: 'Helvetica'; font-size: 16px;">
                                    <b>Saturday</b>
                                </td>
                                <td align="center" width="10%" style="font-family: 'Helvetica'; font-size: 16px;">
                                    <b>Sunday</b>
                                </td>
                                <td align="center" width="10%" style="font-family: 'Helvetica'; font-size: 16px;">
                                    <b>Total</b>
                                </td>
                            </tr>
                            <tr t-foreach="doc.get_product()" t-as="t">
                                <td align="left" width="20%" style="font-family: 'Helvetica'; font-size: 16px; padding-left: 4px;">
                                    <span t-esc="t.get('product')"></span>
                                </td>
                                <td align="center" width="10%" style="font-family: 'Helvetica'; font-size: 16px;">
                                    <span t-esc="t.get('monday')"></span>
                                </td>
                                <td align="center" width="10%" style="font-family: 'Helvetica'; font-size: 16px;">
                                    <span t-esc="t.get('tuesday')"></span>
                                </td>
                                <td align="center" width="10%" style="font-family: 'Helvetica'; font-size: 16px;">
                                    <span t-esc="t.get('wednesday')"></span>
                                </td>
                                <td align="center" width="10%" style="font-family: 'Helvetica'; font-size: 16px;">
                                    <span t-esc="t.get('thursday')"></span>
                                </td>
                                <td align="center" width="10%" style="font-family: 'Helvetica'; font-size: 16px;">
                                    <span t-esc="t.get('friday')"></span>
                                </td>
                                <td align="center" width="10%" style="font-family: 'Helvetica'; font-size: 16px;">
                                    <span t-esc="t.get('saturday')"></span>
                                </td>
                                <td align="center" width="10%" style="font-family: 'Helvetica'; font-size: 16px;">
                                    <span t-esc="t.get('sunday')"></span>
                                </td>

                                <td align="center" width="10%" style="font-family: 'Helvetica'; font-size: 16px;">
                                    <t t-set="reg" t-value="0" />
                                    <span t-if="t.get('monday')">
                                        <t t-set="reg" t-value="reg+t.get('monday')" />
                                    </span>
                                    <span t-if="t.get('tuesday')">
                                        <t t-set="reg" t-value="reg+t.get('tuesday')" />
                                    </span>
                                    <span t-if="t.get('wednesday')">
                                        <t t-set="reg" t-value="reg+t.get('wednesday')" />
                                    </span>
                                    <span t-if="t.get('thursday')">
                                        <t t-set="reg" t-value="reg+t.get('thursday')" />
                                    </span>
                                    <span t-if="t.get('friday')">
                                        <t t-set="reg" t-value="reg+t.get('friday')" />
                                    </span>
                                    <span t-if="t.get('saturday')">
                                        <t t-set="reg" t-value="reg+t.get('saturday')" />
                                    </span>
                                    <span t-if="t.get('sunday')">
                                        <t t-set="reg" t-value="reg+t.get('sunday')" />
                                    </span>
                                    <span t-esc="reg" />
                                </td>
                            </tr>

                            <tr>
                                <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 16px; font-weight: bold;">
                                    Total
                                </td>
                                <td align="center" width="10%" style="font-family: 'Helvetica'; font-size: 16px; font-weight: bold;">
                                    <t t-set="reg" t-value="0" />
                                    <t t-foreach="doc.get_product()" t-as="i">
                                        <span t-if="i.get('monday')"><t t-set="reg" t-value="reg+i.get('monday')" /></span>
                                    </t>
                                    <span t-esc="reg" />
                                </td>
                                <td align="center" width="10%" style="font-family: 'Helvetica'; font-size: 16px; font-weight: bold;">
                                    <t t-set="reg" t-value="0" />
                                    <t t-foreach="doc.get_product()" t-as="i">
                                        <span t-if="i.get('tuesday')"><t t-set="reg" t-value="reg+i.get('tuesday')" /></span>
                                    </t>
                                    <span t-esc="reg" />
                                </td>
                                <td align="center" width="10%" style="font-family: 'Helvetica'; font-size: 16px; font-weight: bold;">
                                    <t t-set="reg" t-value="0" />
                                    <t t-foreach="doc.get_product()" t-as="i">
                                        <span t-if="i.get('wednesday')"><t t-set="reg" t-value="reg+i.get('wednesday')" /></span>
                                    </t>
                                    <span t-esc="reg" />
                                </td>
                                <td align="center" width="10%" style="font-family: 'Helvetica'; font-size: 16px; font-weight: bold;">
                                    <t t-set="reg" t-value="0" />
                                    <t t-foreach="doc.get_product()" t-as="i">
                                        <span t-if="i.get('thursday')"><t t-set="reg" t-value="reg+i.get('thursday')" /></span>
                                    </t>
                                    <span t-esc="reg" />
                                </td>
                                <td align="center" width="10%" style="font-family: 'Helvetica'; font-size: 16px; font-weight: bold;">
                                    <t t-set="reg" t-value="0" />
                                    <t t-foreach="doc.get_product()" t-as="i">
                                        <span t-if="i.get('friday')"><t t-set="reg" t-value="reg+i.get('friday')" /></span>
                                    </t>
                                    <span t-esc="reg" />
                                </td>
                                <td align="center" width="10%" style="font-family: 'Helvetica'; font-size: 16px; font-weight: bold;">
                                    <t t-set="reg" t-value="0" />
                                    <t t-foreach="doc.get_product()" t-as="i">
                                        <span t-if="i.get('saturday')"><t t-set="reg" t-value="reg+i.get('saturday')" /></span>
                                    </t>
                                    <span t-esc="reg" />
                                </td>
                                <td align="center" width="10%" style="font-family: 'Helvetica'; font-size: 16px; font-weight: bold;">
                                    <t t-set="reg" t-value="0" />
                                    <t t-foreach="doc.get_product()" t-as="i">
                                        <span t-if="i.get('sunday')"><t t-set="reg" t-value="reg+i.get('sunday')" /></span>
                                    </t>
                                    <span t-esc="reg" />
                                </td>
                                <td align="center" width="10%" style="font-family: 'Helvetica'; font-size: 16px; font-weight: bold;">
                                    <t t-set="reg" t-value="0" />

                                    <t t-foreach="doc.get_product()" t-as="i">
                                        <span t-if="i.get('monday')">
                                            <t t-set="reg" t-value="reg+i.get('monday')" />
                                        </span>
                                        <span t-if="i.get('tuesday')">
                                            <t t-set="reg" t-value="reg+i.get('tuesday')" />
                                        </span>
                                        <span t-if="i.get('wednesday')">
                                            <t t-set="reg" t-value="reg+i.get('wednesday')" />
                                        </span>
                                        <span t-if="i.get('thursday')">
                                            <t t-set="reg" t-value="reg+i.get('thursday')" />
                                        </span>
                                        <span t-if="i.get('friday')">
                                            <t t-set="reg" t-value="reg+i.get('friday')" />
                                        </span>
                                        <span t-if="i.get('saturday')">
                                            <t t-set="reg" t-value="reg+i.get('saturday')" />
                                        </span>
                                        <span t-if="i.get('sunday')">
                                            <t t-set="reg" t-value="reg+i.get('sunday')" />
                                        </span>
                                    </t>
                                    <span t-esc="reg" />
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </t>
        </xpath>
    </template>

    <template id="rpt_sale_order_day_wise_new">
        <t t-call="web.html_container">
            <t t-as="doc" t-foreach="docs">
                <t t-call="equip3_sale_report.rpt_sale_order_day_wise_inherit"/>
            </t>
        </t>
    </template>
</odoo>