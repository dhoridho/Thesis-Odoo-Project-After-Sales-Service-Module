<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="sh_payment_report_wizard_form" model="ir.ui.view">
        <field name="name">sh.payment.report.wizard.form</field>
        <field name="model">sh.payment.report.wizard</field>
        <field name="inherit_id" ref="sh_sale_reports.sh_payment_report_wizard_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/group[last()]/field[@name='company_ids']" position="after">
                <field name="branch_ids" options="{'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" widget="many2many_tags"/>
            </xpath>
            <xpath expr="//group[last()]/field[@name='user_ids']/tree/field[@name='name']" position="attributes">
                <attribute name="string">Salesperson</attribute>
            </xpath>
        </field>
    </record>

    <record id="payment_report_action" model="ir.actions.report">
        <field name="name">Invoice Payment Report</field>
        <field name="model">sh.payment.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">equip3_sale_report.inv_payment_report_doc</field>
        <field name="print_report_name">'Invoice Payment Report'</field>
    </record>

    <template id="inv_payment_report_doc_external_layout">
        <!-- Multicompany -->
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <t t-call="equip3_sale_report.inv_payment_report_doc_header"/>
        <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
            <t t-raw="0"/>
        </div>
        <t t-call="general_template.templates_footer"/>
    </template>

    <template id="inv_payment_report_doc_header">
        <div class="header">
            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                <tbody>
                    <tr>
                        <td>
                            <center>
                                <table border="0" cellpadding="0" cellspacing="0" style="padding:0px 20px 0px 20px; margin:0; background:#fff; line-height:20px; vertical-align:middle; float:none;" width="100%">
                                    <tr>
                                        <td align="left" colspan="2" t-attf-style="vertical-align:middle; float:none; color:#{text_color or '#ffffff'}; padding:0 0px;" valign="top">
                                            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                <tr>
                                                    <td align="left" style="color:#4D4D4F; padding: 0px 15px; border-right: 1px solid #D4D1D1; width:10%; vertical-align:middle; float:none;" valign="middle">
                                                        <img style="max-height:50px; vertical-align: top; float:none;" t-att-src="'data:image/png;base64,%s'% to_text(o.company_id.logo)" t-if="o.company_id.logo"/>
                                                        <br/>
                                                    </td>
                                                    <td style="padding:15px 0px 0px 15px; width:30%" valign="top">
                                                        <p t-attf-style="text-transform:capitalize; color: #{theme_color or '#ffffff'}; font-weight:bold;margin:0; margin-bottom:5px;">Address</p>
                                                        <t t-call="general_template.templates_company_details"/>
                                                    </td>
                                                    <!-- <td style="padding: 10px 20px 0px 20px;width:40%" valign="top">
                                                        <div valign="top">
                                                            <t t-call="general_template.templates_customer_details"/>
                                                        </div>
                                                    </td> -->
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </center>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </template>

    <template id="inv_payment_report_doc_2">
        <t t-call="equip3_sale_report.inv_payment_report_doc_external_layout">
            <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color"/>
            <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color"/>
            <t t-set="company_color" t-value="o.company_id and o.company_id.company_color"/>
            <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color"/>
            <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color"/>
            <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color"/>
            <t t-set="text_color" t-value="o.company_id and o.company_id.text_color"/>
            <div class="page" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                <div class="oe_structure" />
                <div t-attf-style="background-color:#f2f2f2;border-bottom:1px solid #{theme_color or '#ececec'}; overflow: visible; margin-bottom: 20px;"/>
                <div class="row">
                    <div class="col-12 mx-auto">
                        <div class="text-center">
                            <b>
                                <h4>Invoice Payment Report</h4>
                            </b>
                            <b>
                                <span t-field="o.date_start" t-options="{'widget': 'date', 'format': 'dd MMMM yyyy'}" />
                                -
                                <span t-field="o.date_end" t-options="{'widget': 'date', 'format': 'dd MMMM yyyy'}" />
                            </b>
                        </div>
                    </div>
                </div>
                <br />
                <table border="0" cellpadding="0" cellspacing="0" t-attf-style="color:#fff; text-transform:capitalize; border: 1px solid #{theme_color or '#000000'};" width="100%">
                    <tr t-attf-style="color: #{theme_text_color or '#FFFFFF'}; background-color: #{theme_color or '#000000'};">
                        <td t-attf-style="font-weight:bold;">
                            <div style="padding:9px 15px; margin_right: 50px">
                                <span>Printed On </span>
                                <br/>
                                <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                            </div>
                        </td>
                        <td t-attf-style="font-weight:bold;">
                            <div style="padding:9px 15px">
                                <span>Status: </span>
                                <br/>
                                <span t-field="o.state"/>
                            </div>
                        </td>
                    </tr>
                </table>
                <hr/>
                <br />
                <t t-foreach="o.user_data_dic" t-as="user">
                    <left>
                        <b>
                            <span>Sale Person :</span>
                            <span t-esc="user.saleperson" />
                        </b>
                    </left>
                    <table style="margin-top: 10px;" class="table table-striped">
                        <tr t-attf-style="color: #{theme_text_color or '#FFFFFF'}; background-color: #{theme_color or '#000000'};">
                            <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 14px;">
                                <b>Invoice</b>
                            </td>
                            <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 14px;">
                                <b>Invoice Date</b>
                            </td>
                            <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 14px;">
                                <b>Payment Date</b>
                            </td>
<!--                            <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 14px;">-->
<!--                                <b>Salesperson</b>-->
<!--                            </td>-->
                            <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 14px;">
                                <b>Customer</b>
                            </td>
                            <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 14px;">
                                <b>Bank</b>
                            </td>
                            <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 14px;">
                                <b>Cash</b>
                            </td>
                            <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 14px;">
                                <b>Total</b>
                            </td>
                        </tr>
                        <t t-set="cash" t-value="0" />
                        <t t-set="bank" t-value="0" />
                        <t t-set="total" t-value="0" />
                        <tr t-foreach="user.list_pay" t-as="order">
                            <td style="border: 1px solid black;">
                                <span t-field="order.invoice" />
                            </td>
                            <td style="border: 1px solid black;">
                                <span t-field="order.invoice_date" t-options="{'widget': 'datetime'}" />
                            </td>
                            <td style="border: 1px solid black;">
                                <span t-field="order.payments_date" t-options="{'widget': 'datetime'}" />
                            </td>
<!--                            <td style="border: 1px solid black;">-->
<!--                                <span t-field="order.salesperson"/>-->
<!--                            </td>-->
                            <td style="border: 1px solid black;">
                                <span t-field="order.customer"/>
                            </td>
                            <td style="border: 1px solid black;">
                                <span t-esc="order.bank" t-options='{"widget": "float", "precision": 2}'/>
                            </td>
                            <td style="border: 1px solid black;">
                                <span t-esc="order.cash" t-options='{"widget": "float", "precision": 2}'/>
                            </td>
                            <td style="border: 1px solid black;">
                                <span t-esc="order.total" t-options='{"widget": "float", "precision": 2}'/>
                            </td>
                            <t t-set="bank" t-value="bank + order.bank" />
                            <t t-set="cash" t-value="cash + order.cash" />
                            <t t-set="total" t-value="total + order.total" />
                        </tr>
                        <tr>
                            <td style="border:1px solid black;"></td>
                            <td style="border:1px solid black;"></td>
                            <td style="border:1px solid black;"></td>
                            <td style="border: 1px solid black;">
                                    <b>Total</b>
                            </td>
                            <td style="border: 1px solid black;">
                                <span t-esc="sum(user.list_pay.mapped('bank'))" t-options='{"widget": "float", "precision": 2}'/>
                            </td>
                            <td style="border: 1px solid black;">
                                <span t-esc="sum(user.list_pay.mapped('cash'))" t-options='{"widget": "float", "precision": 2}'/>
                            </td>
                            <td style="border: 1px solid black;">
                                <span t-esc="sum(user.list_pay.mapped('total'))" t-options='{"widget": "float", "precision": 2}'/>
                            </td>
                        </tr>
                    </table>
                </t>
                <!-- grand journal total -->
                <br />
                <br />

                <t t-if="o.grand_journal_dic">
                    <h3>Payment Method</h3>
                    <table style="margin-top: 10px;" class="table table-striped">
                        <tr t-attf-style="color: #{theme_text_color or '#FFFFFF'}; background-color: #{theme_color or '#000000'};">
                            <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 14px;">
                                <b>Name</b>
                            </td>
                            <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 14px;">
                                <b>Total</b>
                            </td>
                        </tr>
                        <tr t-foreach="o.grand_journal_dic" t-as="journal">
                            <td style="border: 1px solid black;font-weight: bold;">
                                <span t-field="journal.name"/>
                            </td>
                            <td style="border: 1px solid black;">
                                <span t-esc="journal.total" t-options='{"widget": "float", "precision": 2}'/>
                            </td>
                        </tr>
                    </table>
                </t>
            </div>
        </t>
    </template>

    <template id="inv_payment_report_doc">
        <t t-call="web.html_container">
            <t t-as="o" t-foreach="docs">
                <t t-call="equip3_sale_report.inv_payment_report_doc_2"/>
            </t>
        </t>
    </template>
</odoo>