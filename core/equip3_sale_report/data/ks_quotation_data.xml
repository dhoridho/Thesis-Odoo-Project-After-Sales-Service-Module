<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ks_quotation_item_1" model="ks_dashboard_ninja.item">
            <field name="name">Quotation Monitoring</field>
            <field name="ks_dashboard_item_type">ks_list_view</field>
<!--            <field name="ks_list_view_layout">layout_3</field>-->
            <field name="ks_pagination_limit">50</field>
            <field name="ks_model_id" eval="ref('sale.model_sale_order')"/>
            <field name="ks_list_view_fields"
                   eval="[(6, 0, [ref('sale.field_sale_order__name'),ref('sale.field_sale_order__create_date'),ref('sale.field_sale_order__partner_id'),ref('sale.field_sale_order__user_id'),ref('sale.field_sale_order__amount_total'),ref('sale.field_sale_order__state')])]"/>
            <field name="ks_sort_by_order">DESC</field>
            <field name="ks_domain">[["state","not in",("sale","done","cancel")]]</field>
            <field name="ks_sort_by_field" eval="ref('sale.field_sale_order__id')"/>
            <field name="ks_chart_item_color">default</field>
            <field name="ks_auto_update_type">ks_live_update</field>
            <field name="ks_show_live_pop_up">1</field>
            <field name="ks_company_id" eval="0"/>
        </record>
        <record id="ks_quotation_dash" model="ks_dashboard_ninja.board_template">
            <field name="name">Quotation Monitoring</field>
            <field name="ks_gridstack_config">[
                {"item_id":"equip3_sale_report.ks_quotation_item_1", "data": {"x": 0, "y": 0, "w": 12, "h": 10}}
                ]
            </field>
            <field name="ks_item_count">1</field>
        </record>
        <record model="ks_dashboard_ninja.board" id="quotation_dashboard">
            <field name="name">Quotation Monitoring</field>
            <field name="ks_dashboard_menu_name">Quotation Monitoring</field>
            <field name="ks_dashboard_top_menu_id" ref="sale.sale_menu_root"/>
            <field name="ks_dashboard_default_template" eval="ref('ks_quotation_dash')"/>
            <field name="ks_dashboard_active" eval="True"/>
            <field name="ks_dashboard_group_access" eval="False"/>
            <field name="ks_dashboard_menu_sequence" eval="1"/>
        </record>
    </data>
</odoo>