<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="menu_planner_tree" model="ir.ui.view">
        <field name="name">menu.planner.tree</field>
        <field name="model">menu.planner</field>
        <field name="arch" type="xml">
            <tree>
                <field name="reference_number"/>
                <field name="created_date"/>
                <field name="planner_date"/>
                <field name="package_id"/>
            </tree>
        </field>
    </record>

    <record id="menu_planner_form" model="ir.ui.view">
        <field name="name">menu.planner.form</field>
        <field name="model">menu.planner</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="reference_number" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <field name="package_id" domain="[('is_catering', '=', True), ('catering_type', '=', 'package')]"/>
                        <field name="planner_date"/>
                        <field name="company_id" invisible="True"/>
                    </group>
                    <group>
                        <field name="created_date" invisible="True"/>
                        <field name="created_by" invisible="True"/>
                    </group>
                    <notebook>
                        <page string="Menu Lines">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="menu_id" domain="[('is_catering', '=', True), ('catering_type', '=', 'menu')]"/>
                                    <field name="desc"/>
                                    <field name="quantity"/>
                                    <field name="uom_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Customer">
                            <field name="customer_ids">
                                <tree editable="bottom">
                                    <!-- <field name="name"/> -->
                                    <field name="partner_id"/>
                                    <!-- <field name="order"/> -->
                                    <field name="picking_id" invisible="1"/>
                                    <field name="remark"/>
                                    <field name="is_button_visible" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="meals_type_form" model="ir.ui.view">
        <field name="name">meals.type.form</field>
        <field name="model">meals.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                        <group>
                            <field name="delivery_time" widget="float_time" required="1"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_meals_type" model="ir.actions.act_window">
        <field name="name">Meals Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">meals.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_views_nocontent_create">
                Click to add a new test object.
            </p>
        </field>
    </record>

    <record id="action_menu_planner" model="ir.actions.act_window">
        <field name="name">Menu Planner Lines</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">menu.planner</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_views_nocontent_create">
                Click to add a new test object.
            </p>
        </field>
    </record>

    <record id="product_catering_product_form_view" model="ir.ui.view">
        <field name="name">product.catering_form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="attributes">
                <attribute name="force_save">1</attribute>
                <attribute name="readonly">1</attribute>
            </xpath>
            <!-- <xpath expr="//field[@name='categ_id']" position="attributes">
                <attribute name="force_save">1</attribute>
                <attribute name="readonly">1</attribute>
            </xpath> -->
            <xpath expr="//div[@class='oe_title']/div[@name='options']" position="inside">
                <div>
                    <field name="is_catering_product" invisible="1"/>
                    <field name="is_catering" attrs="{'invisible': [('is_catering_product', '!=', True)]}"/>
                    <label for="is_catering" attrs="{'invisible': [('is_catering_product', '!=', True)]}"/>
                </div>
            </xpath>
            <xpath expr="//notebook/page[@name='sales']" position="after">
                <page name="catering" string="Catering" attrs="{'invisible': [('is_catering', '!=', True)]}">
                    <group>
                        <group>
                            <field name="catering_type"/>
                            <field name="subscription" attrs="{'invisible': [('catering_type', '!=', 'package')]}">
                                <tree editable="bottom">
                                    <field name="duration"/>
                                    <field name="price"/>
                                </tree>
                            </field>
                            <label for="monday" string="Days" attrs="{'invisible': [('catering_type', '!=', 'package')]}"/>
                            <div class="o_col" attrs="{'invisible': [('catering_type', '!=', 'package')]}">
                                <div class="o_row">
                                    <field name="monday"/>
                                    <label for="monday"/>
                                    <field name="tuesday"/>
                                    <label for="tuesday"/>
                                    <field name="wednesday"/>
                                    <label for="wednesday"/>
                                    <field name="thursday"/>
                                    <label for="thursday"/>
                                    <field name="friday"/>
                                    <label for="friday"/>
                                </div>
                                <div class="o_row">
                                    <field name="saturday"/>
                                    <label for="saturday"/>
                                    <field name="sunday"/>
                                    <label for="sunday"/>
                                </div>
                            </div>
                        </group>
                        <group>
                            <field name="meal_type_id" attrs="{'invisible': [('catering_type', '!=', 'package')],'required': [('catering_type', '=', 'package')]}"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="product_template_action_product" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="stock.product_template_search_form_view_stock"/>
        <field name="context">{"search_default_consumable": 1, 'default_type': 'product', 'default_is_catering': True, 'default_is_catering_product': True}</field>
        <field name="domain">[('is_catering', '=', True)]</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'kanban', 'view_id' : ref('product.product_template_kanban_view')}),
                (0, 0, {'view_mode': 'tree', 'view_id' : ref('stock.view_stock_product_template_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('equip3_catering_masterdata.product_catering_product_form_view')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No product found. Let's create one!
            </p><p>
            Track your stock quantities by creating storable products.
        </p>
        </field>
    </record>

    <record id="base.action_partner_customer_form" model="ir.actions.act_window">
        <field name="domain">[('is_customer', '=', True)]</field>
    </record>

    <!-- Top menu item -->
    <menuitem id="catering_menu_root"
              name="Catering"
              web_icon="equip3_catering_masterdata,static/description/icon.png"/>

    <menuitem id="menu_masterdata"
              name="Master data"
              parent="catering_menu_root"
              sequence="1"/>

    <menuitem id="menu_config_catering"
              name="Configuration"
              parent="catering_menu_root"
              sequence="2"/>

    <menuitem id="menu_product"
              name="Products"
              parent="menu_masterdata"
              action="product_template_action_product"
              sequence="1"/>

    <menuitem id="menu_planner"
              name="Menu Planner Lines"
              parent="menu_masterdata"
              action="action_menu_planner"
              sequence="20"/>

    <menuitem id="menu_catering_customer" name="Customers"
        parent="menu_masterdata" action="base.action_partner_customer_form" sequence="30" />

    <menuitem id="menu_meal_type"
              name="Meals Type"
              parent="menu_config_catering"
              action="action_meals_type"
              sequence="1"/>

    <menuitem name="Terms &amp; Conditions"
              id="menu_orders_terms_and_conditions"
              parent="menu_config_catering"
              action="equip3_sale_operation.action_sale_terms_and_conditions"
              sequence="1"/>


</odoo>