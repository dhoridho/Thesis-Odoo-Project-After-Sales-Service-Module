<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="catering_menu_planner_tree" model="ir.ui.view">
        <field name="name">catering.menu.planner.tree</field>
        <field name="model">catering.menu.planner</field>
        <field name="arch" type="xml">
            <tree>
                <field name="reference_number"/>
                <field name="from_date"/>
                <field name="to_date"/>
                <field name="package_id"/>
            </tree>
        </field>
    </record>

    <!-- catering.menu.planner form view -->
    <record id="catering_menu_planner_view_form" model="ir.ui.view">
        <field name="name">catering.menu.planner.view.form</field>
        <field name="model">catering.menu.planner</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <button string="Generate Lines" name="action_generate_planner" type="object" class="oe_edit_only"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="reference_number" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <field name="package_id" domain="[('is_catering', '=', True), ('catering_type', '=', 'package')]"/>
                        <field name="from_date"/>
                        <field name="to_date"/>
                    </group>
                    <notebook>
                        <page name="planner_ids" string="Menu Lines">
                            <field name="planner_ids">
                                <tree create="false" delete="false">
                                    <field name="reference_number"/>
                                    <field name="planner_date"/>
                                    <field name="menu_lines"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <field name="reference_number" readonly="1" string="Planner"/>
                                            <field name="masking_package_id" string="Package"/>
                                            <field name="masking_planner_date" string="Planner Date"/>
                                            <field name="company_id" invisible="True"/>
                                        </group>
                                        <group>
                                            <field name="created_date" invisible="True"/>
                                            <field name="created_by" invisible="True"/>
                                        </group>
                                        <notebook>
                                            <page string="Menu Lines">
                                                <field name="line_ids">
                                                    <tree editable="bottom">
                                                        <field name="menu_id" domain="[('is_catering', '=', True), ('catering_type', '=', 'menu')]"/>
                                                        <field name="desc"/>
                                                        <field name="quantity"/>
                                                        <field name="uom_id"/>
                                                    </tree>
                                                </field>
                                            </page>
                                            <page string="Customer">
                                                <field name="customer_ids">
                                                    <tree editable="bottom">
                                                        <!-- <field name="name"/> -->
                                                        <field name="partner_id"/>
                                                        <!-- <field name="order"/> -->
                                                        <field name="picking_id" invisible="1"/>
                                                        <field name="remark"/>
                                                        <field name="is_button_visible" invisible="1"/>
                                                    </tree>
                                                </field>
                                            </page>
                                        </notebook>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- catering.menu.planner action window -->
    <record id="catering_menu_planner_action" model="ir.actions.act_window">
        <field name="name">Menu Planner</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">catering.menu.planner</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
            </p><p>
                <!-- More details about what a user can do with this object will be OK --> 
            </p>
        </field>
    </record>

    <menuitem id="catering_menu_planner"
              name="Menu Planner"
              parent="menu_masterdata"
              action="catering_menu_planner_action"
              sequence="10"/>
</odoo>