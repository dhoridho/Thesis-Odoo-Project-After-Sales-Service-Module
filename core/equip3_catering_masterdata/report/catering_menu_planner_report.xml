<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="company_details">
        <span style="text-transform:capitalize; padding:0px; margin:0; color: #51565b;">
            <t t-if="company.partner_id">
                <strong>
                    <span t-field="company.partner_id"/>
                    <br/>
                    <br/>
                    <br/>
                    <span t-field="company.street"/>
                    <span t-field="company.country_id"/>
                </strong>
            </t>
        </span>
    </template>

    <template id="menu_planner_template_header">
        <div class="header">
            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                <tbody>
                    <tr>
                        <td>
                            <center>
                                <table border="0" cellpadding="0" cellspacing="0" style="padding:20px 20px 0px 20px; margin:0; background:#fff; line-height:20px; vertical-align:middle; float:none;" width="100%">
                                    <tr>
                                        <td align="left" colspan="2" t-attf-style="vertical-align:middle; float:none; color:#{text_color or '#ffffff'}; padding:0 0px;" valign="top">
                                            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                <tr>
                                                    <td align="left" style="color:#4D4D4F; padding: 20px 20px 0px 20px; border-right: 1px solid #D4D1D1; width:10%; vertical-align:top; float:none;" valign="top">
                                                        <img style="max-height:50px; vertical-align: top; float:none;" t-att-src="'data:image/png;base64,%s'% to_text(company.logo)" t-if="company.logo"/>
                                                        <br/>
                                                    </td>
                                                    <td style="padding: 20px 20px 0px 20px; width:30%" valign="top">
                                                        <p t-attf-style="text-transform:capitalize; color: #000000; font-weight:bold;margin:0; margin-bottom:5px;">Address</p>
                                                        <t t-call="equip3_catering_masterdata.company_details"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </center>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </template>

    <template id="menu_planner_template_footer">
        <div class="footer">
            <div class="text-center" style="border-top: 1px solid black;">
                <ul class="list-inline mb4">
                    <li t-if="company.phone">Phone: 
                        <span t-field="company.phone"/></li>
                    <li t-if="company.email">Email: 
                        <span t-field="company.email"/></li>
                    <li t-if="company.website">Web: 
                        <span t-field="company.website"/></li>
                    <li t-if="company.vat">
                        <t t-esc="company.country_id.vat_label or 'TIN'"/>: 
                        <span t-field="company.vat"/></li>
                </ul>
                <div name="financial_infos">
                    <span t-field="company.report_footer"/>
                </div>
                <div class="text-muted">Page: 
                    <span class="page"/>
                    / 
                    <span class="topage"/></div>
            </div>
        </div>
    </template>

    <template id="menu_planner_template_external_layout">
        <!-- Multicompany -->
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <t t-call="equip3_catering_masterdata.menu_planner_template_header"/>
        <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
            <t t-raw="0"/>
        </div>
        <t t-call="equip3_catering_masterdata.menu_planner_template_footer"/>
    </template>

    <template id="menu_planner_template_lines">
        <table border="0" cellpadding="0" cellspacing="0" t-attf-style="color:#fff; text-transform:capitalize;" width="100%">
            <colgroup>
                <col width="5%"/><col width="5%"/><col width="5%"/><col width="5%"/>
                <col width="5%"/><col width="5%"/><col width="5%"/><col width="5%"/>
                <col width="5%"/><col width="5%"/><col width="5%"/><col width="5%"/>
                <col width="5%"/><col width="5%"/><col width="5%"/><col width="5%"/>
                <col width="5%"/><col width="5%"/><col width="5%"/><col width="5%"/>
            </colgroup>
            <t t-as="pi" t-foreach="o.planner_ids">
                <tr>
                    <td width="30%" t-attf-style="padding:9px 15px; background-color:#8B0023; color:#FFFFFF; font-weight:bold; border-right: 3px solid #FFFFFF;"><span t-esc="pi.planner_date.strftime('%A')"/><span>, </span><span t-field="pi.planner_date"/></td>
                    <td width="30%" t-attf-style="padding:9px 15px; background-color:#8B0023; color:#FFFFFF; font-weight:bold;"><span t-field="pi.reference_number"/></td>
                    <td width="40%" t-attf-style="border:none;"></td>
                </tr>
                <tr>
                    <td t-attf-colspan="3">
                        <t t-if="pi.line_ids">
                            <table width="100%">
                                <tr t-attf-style="background-color: #3f3f3f;">
                                    <td width="10%" t-attf-style="padding:9px 15px; font-weight:bold; color: #{theme_color or '#ffffff'};">No.</td>
                                    <td width="30%" t-attf-style="padding:9px 15px; font-weight:bold; color: #{theme_color or '#ffffff'};">Menu</td>
                                    <td width="30%" t-attf-style="padding:9px 15px; font-weight:bold; color: #{theme_color or '#ffffff'};">Description</td>
                                    <td width="10%" t-attf-style="padding:9px 15px; font-weight:bold; color: #{theme_color or '#ffffff'};">Quantity</td>
                                    <td width="20%" t-attf-style="padding:9px 15px; font-weight:bold; color: #{theme_color or '#ffffff'};">UOM</td>
                                </tr>
                                <t t-as="li" t-foreach="pi.line_ids">
                                    <tr t-attf-style="background-color: #{theme_color or '#ffffff'};">
                                        <td width="10%" t-attf-style="padding:9px 15px; border: 1px solid #CCCCCC; font-weight:bold; color: #{theme_text_color or '#000000'};"><span t-esc="li_index+1"/></td>
                                        <td width="30%" t-attf-style="padding:9px 15px; border: 1px solid #CCCCCC; font-weight:bold; color: #{theme_text_color or '#000000'};"><span t-field="li.menu_id"/></td>
                                        <td width="30%" t-attf-style="padding:9px 15px; border: 1px solid #CCCCCC; font-weight:bold; color: #{theme_text_color or '#000000'};"><span t-field="li.desc"/></td>
                                        <td width="10%" t-attf-style="padding:9px 15px; border: 1px solid #CCCCCC; font-weight:bold; color: #{theme_text_color or '#000000'};"><span t-field="li.quantity"/></td>
                                        <td width="20%" t-attf-style="padding:9px 15px; border: 1px solid #CCCCCC; font-weight:bold; color: #{theme_text_color or '#000000'};"><span t-field="li.uom_id"/></td>
                                    </tr>
                                </t>
                            </table>
                        </t>
                    </td>
                </tr>
                <tr>
                    <td t-attf-colspan="3" t-attf-style="height:20px; border:none;"></td>
                </tr>
            </t>
        </table>
    </template>

    <template id="report_menu_planner_views">
        <t t-call="equip3_catering_masterdata.menu_planner_template_external_layout">
        <t t-set="theme_color" t-value="company and company.theme_color"/>
        <t t-set="theme_text_color" t-value="company and company.theme_text_color"/>
            <div class="page">
                <div class="oe_structure"/>
                <br/>
                <div width="100%">
                    <div  style="padding:0px 20px 20px 20px; margin:0; background:#fff; line-height:20px;" width="100%">
                        <div>
                            <p  t-attf-style="padding:20px 0px 0px 0px; height:5px; border-bottom: 1px solid #{theme_color or '#000000'};"/>
                        </div>
                        <div align="left"  style="color:#4D4D4F; padding: 0px 0px 15px 0px;" valign="top">
                            <table border="0" cellpadding="0" cellspacing="0" t-attf-style="color:#fff; text-transform:capitalize; border: 1px solid #{theme_color or '#000000'};" width="100%">
                                <tr t-attf-style="background-color: #3f3f3f;">
                                    <td t-attf-style="padding:9px 15px; font-weight:bold; color: #{theme_color or '#ffffff'}; border-right: 3px solid #FFFFFF;">
                                        <span>Menu Planner</span>
                                        <br/>
                                        <span t-field="o.reference_number"/>
                                    </td>
                                    <td t-attf-style="padding:5px 15px; font-weight:bold; color: #{theme_color or '#ffffff'};">
                                        <strong>Package:</strong>
                                        <br/>
                                        <span t-field="o.package_id"/>
                                    </td>
                                    <td t-attf-style="padding:5px 15px; font-weight:bold; color: #{theme_color or '#ffffff'};">
                                        <strong>From Date:</strong>
                                        <br/>
                                        <span t-field="o.from_date"/>
                                    </td>
                                    <td t-attf-style="padding:5px 15px; font-weight:bold; color: #{theme_color or '#ffffff'};">
                                        <strong>To Date:</strong>
                                        <br/>
                                        <span t-field="o.to_date"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div>
                            <p  t-attf-style="padding:5px 0px 0px 0px; height:5px; border-bottom: 1px solid #{theme_color or '#000000'};"/>
                        </div>
                        <div>
                            <t t-call="equip3_catering_masterdata.menu_planner_template_lines"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </div>
        </t>
    </template>

    <template id="report_menu_planner">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="equip3_catering_masterdata.report_menu_planner_views"/>
            </t>
        </t>
    </template>

</odoo>