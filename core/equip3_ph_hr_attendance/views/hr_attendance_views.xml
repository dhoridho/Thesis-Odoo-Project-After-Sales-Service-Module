<?xml version="1.0"?>
<odoo>
    <record id="ph_hr_attendance_form" model="ir.ui.view">
        <field name="name">hr.attendance.form</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance_base.hr_attendance_view_form_base" />
        <field name="arch" type="xml">
            <xpath expr="//group[@col='4']" position="replace">
                <group name="main_group">
                    <group name="left_group">
                        <field name="employee_id"/>
                        <field name="working_schedule_id"/>
                        <field name="hour_from" widget="float_time" readonly="1"/>
                        <field name="hour_to" widget="float_time" readonly="1"/>
                        <field name="tolerance_late" widget="float_time" readonly="1"/>
                        <field name="minimum_hours" widget="float_time" readonly="1"/>
                        <field name="check_in"/>
                        <field name="check_out"/>
                        <field name="check_in_status"/>
                        <field name="check_out_status"/>
                        <field name="attendance_status"/>
                    </group>
                    <group name="right_group">
                        <field name="start_working_date"/>
                        <field name="break_from" widget="float_time" readonly="1" string="Allowed Start Break"/>
                        <field name="break_to" widget="float_time" readonly="1" string="Allowed End Break"/>
                        <field name="maximum_break" widget="float_time" readonly="1" string="Maximum Break"/>
                        <field name="start_break" string="Start Break"/>
                        <field name="end_break" string="End Break"/>
                        <field name="total_break" widget="float_time"/>
                        <field name="total_over_break" widget="float_time"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <record id="ph_hr_attendance_tree" model="ir.ui.view">
        <field name="name">hr.attendance.view.tree</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree" />
        <field name="arch" type="xml">
            <tree position="attributes">
                <attribute name="edit">0</attribute>
                <attribute name="editable"></attribute>
            </tree>

            <xpath expr="//field[@name='employee_id']" position="after">
                <field name="start_working_date" />
            </xpath>

            <xpath expr="//field[@name='worked_hours']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='check_out']" position="after">
                <field name="attendance_status" />
            </xpath>
        </field>
    </record>

    <record id="ph_hr_attendance_inherit_view_attendance_tree_face_recognition" model="ir.ui.view">
        <field name="name">hr.attendance.view.tree</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance_face_recognition.view_attendance_tree_face_recognition" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='face_recognition_access_check_in']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='face_recognition_access_check_out']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>        
        </field>
    </record>


</odoo>