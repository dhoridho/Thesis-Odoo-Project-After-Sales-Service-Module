<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_config_multi_currency_form" model="ir.ui.view">
            <field name="name">view_config_multi_currency_form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='main_currency_setting_container']/div[@id='record_transactions']/div[hasclass('o_setting_right_pane')]/div[hasclass('content-group')]" position="inside">
                    <div class="mt16">
                        <b>Post Unrealized Exchange difference entries in:</b>
                    </div>
                    <div class="row mt8">
                        <label for="unrealized_exchange_journal_id" class="col-lg-3 o_light_label" string="Journal" />
                        <field name="unrealized_exchange_journal_id"/>
                    </div>
                    <div class="row mt8">
                        <label for="income_unrealized_exchange_account_id" class="col-lg-3 o_light_label"/>
                        <field name="income_unrealized_exchange_account_id"/>
                    </div>
                    <div class="row mt8">
                        <label for="expense_unrealized_exchange_account_id" class="col-lg-3 o_light_label"/>
                        <field name="expense_unrealized_exchange_account_id"/>
                    </div>
                </xpath>             
            </field>
        </record>
    </data>
</odoo>