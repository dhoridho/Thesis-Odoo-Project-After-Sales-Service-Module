                                    <field name="reminder_interval_after_unit" style="width: 15%; margin-left:1px" modifiers="{}" />

                                   <field name="reminder_interval_after" attrs="{'invisible': [('reminder_interval_after_unit', '=', 'months')]}" style="width:40%" modifiers="{}"/>
                                    <field name="days_bill_after" attrs="{'invisible': [('reminder_interval_after_unit', 'in', ['months','days'])]}"  style="width:40%" modifiers="{}"/>
                                    <field name="sending_date_bill_after" attrs="{'invisible': [('reminder_interval_after_unit', 'in', ['weeks','days'])]}"  style="width:40%" modifiers="{}"/>

