            <xpath expr="//div[hasclass('settings')]/div[@data-key='account']" position="after">
                <div class="app_settings_block" web_icon="account, static/description/icon.png"
                     data-string="Cash Advanced" string="Cash Advance" data-key="equip3_accounting_accessright_setting">
                    <div id="cash_advanced">
                        <h2>Cash Advanced</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="cash_advanced">
                                <div class="content-group">
                                    <div class="mt16"
                                         groups="equip3_accounting_accessright_setting.group_cash_advance_manager">
                                        <label for="deposit_reconcile_journal_id" string="Reconcile Journal"/>
                                        <field style="margin-left:10px;" name="deposit_reconcile_journal_id"
                                               class="oe_inline"/>
                                   </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16"
                                         groups="equip3_accounting_accessright_setting.group_cash_advance_manager">
                                        <label for="journal_id" string="Payment Method"/>
                                        <field style="margin-left:17px;" name="journal_id" class="oe_inline"
                                               domain="[('type', 'in', ('bank', 'cash'))]" required="0"/>
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16"
                                         groups="equip3_accounting_accessright_setting.group_cash_advance_manager">
                                        <label for="deposit_account_id" string="Advance Account"/>
                                        <field style="margin-left:12px;" name="deposit_account_id" class="oe_inline"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>

            <xpath expr="//div[hasclass('settings')]/div[@data-key='account']/div[@id='invoicing_settings']" position="after">
                <div id="reminders_interval_before">
                    <h2>Reminder Settings</h2>
                    <div class="row mt16 o_settings_container" name="bank_integration_setting_container">
                        <div class="col-12 col-lg-12 o_setting_box" id="bank_integration_setting">
                            <div>
                                <field name="invoice_bill_reminder"/>
                                <label string="Invoice and Bill Reminder" for="invoice_bill_reminder"/>
                            </div>
                            <group style="margin-left:3%;" string="Bill Reminder" attrs="{'invisible': [('invoice_bill_reminder', '=', False)]}">
                                <label string="Before Due Date" for="reminder_interval_before" class="oe_inline"/>
                                <div class="address_format">
                                    <field name="reminder_interval_before_unit"  style="width: 15%; margin-left:1px" modifiers="{}"/>
                                    <field name="reminder_interval_before" attrs="{'invisible': [('reminder_interval_before_unit', '=', 'months')]}"  style="width:40%" modifiers="{}"/>
                                    <field name="days_bill_before" attrs="{'invisible': [('reminder_interval_before_unit', 'in', ['months','days'])]}"  style="width:40%" modifiers="{}"/>
                                    <field name="sending_date_bill_before" attrs="{'invisible': [('reminder_interval_before_unit', 'in', ['weeks','days'])]}"  style="width:40%" modifiers="{}"/>

