                                    <field name="reminder_interval_after_invoice" attrs="{'invisible': [('eminder_interval_after_unit_invoice', '=', 'months')]}" style="width:40%" modifiers="{}"
                                          />
                                    <field name="days_invoice_after" attrs="{'invisible': [('eminder_interval_after_unit_invoice', 'in', ['months','days'])]}"  style="width:40%" modifiers="{}"/>

                                    <field name="sending_date_invoice_after" attrs="{'invisible': [('eminder_interval_after_unit_invoice', 'in', ['weeks','days'])]}"  style="width:40%" modifiers="{}"/>

