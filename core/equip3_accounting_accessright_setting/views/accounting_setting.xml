<?xml version="1.0" encoding="utf-8"?>
<odoo> 
    <!-- this config has been hide on res_config_views.xml -->
    <record id="approval_matrix_settings_form" model="ir.ui.view">
        <field name="name">approval_matrix.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='main_currency_setting_container']" position="after">
                <div id="equip3_general_accounting_matrix">
                    <h2>Accounting</h2>
                    <div class="row mt16 o_settings_container ">
                        <div class="col-12 col-lg-6 o_setting_box" id="matrix_implementor_accounting">
                            <div class="o_setting_left_pane ">
                                <field name="accounting"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Accounting" for="accounting"/>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box" id="get_invoice_approval_matrix" attrs="{'invisible': [('accounting' ,'=', False)]}">
                            <div class="o_setting_left_pane">
                                <field name="is_invoice_approval_matrix"/>
                                <field name="group_is_invoice_approval_matrix" invisible='1'/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_invoice_approval_matrix" string="Invoice Approval Matrix"/>
                                <div class="text-muted">
                                    Set the Invoice Approval Matrix
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box" id="get_bill_approval_matrix" attrs="{'invisible': [('accounting' ,'=', False)]}">
                            <div class="o_setting_left_pane">
                                <field name="is_bill_approval_matrix"/>
                                <field name="group_is_bill_approval_matrix" invisible='1'/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_bill_approval_matrix" string="Bill Approval Matrix"/>
                                <div class="text-muted">
                                    Set the Bill Approval Matrix
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box" id="get_other_income_approval_matrix" attrs="{'invisible': [('accounting' ,'=', False)]}">
                            <div class="o_setting_left_pane">
                                <field name="is_other_income_approval_matrix"/>
                                <field name="group_is_other_income_approval_matrix" invisible='1'/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_other_income_approval_matrix" string="Other Income Approval Matrix"/>
                                <div class="text-muted">
                                    Set the Other Income Approval Matrix
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box" id="get_other_expense_approval_matrix" attrs="{'invisible': [('accounting' ,'=', False)]}">
                            <div class="o_setting_left_pane">
                                <field name="is_other_expense_approval_matrix"/>
                                <field name="group_is_other_expense_approval_matrix" invisible='1'/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_other_expense_approval_matrix" string="Other Expense Approval Matrix"/>
                                <div class="text-muted">
                                    Set the Other Expense Approval Matrix
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box" id="get_customer_multi_receipt_approval_matrix" attrs="{'invisible': [('accounting' ,'=', False)]}">
                            <div class="o_setting_left_pane">
                                <field name="is_customer_multi_receipt_approval_matrix"/>
                                <field name="group_is_customer_multi_receipt_approval_matrix" invisible='1'/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_customer_multi_receipt_approval_matrix" string="Customer Multi Receipt Approval Matrix"/>
                                <div class="text-muted">
                                    Set the Customer Multi Receipt Approval Matrix
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box" id="get_vendor_multipayment_approval_matrix" attrs="{'invisible': [('accounting' ,'=', False)]}">
                            <div class="o_setting_left_pane">
                                <field name="is_vendor_multipayment_approval_matrix"/>
                                <field name="group_is_vendor_multipayment_approval_matrix" invisible='1'/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_vendor_multipayment_approval_matrix" string="Vendor Multi Payment Approval Matrix"/>
                                <div class="text-muted">
                                    Set the Vendor Multi Payment Approval Matrix
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box" id="get_receipt_approval_matrix" attrs="{'invisible': [('accounting' ,'=', False)]}">
                            <div class="o_setting_left_pane">
                                <field name="is_receipt_approval_matrix"/>
                                <field name="group_is_receipt_approval_matrix" invisible='1'/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_receipt_approval_matrix" string="Receipt Approval Matrix"/>
                                <div class="text-muted">
                                    Set the Receipt Approval Matrix
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box" id="get_payment_approval_matrix" attrs="{'invisible': [('accounting' ,'=', False)]}">
                            <div class="o_setting_left_pane">
                                <field name="is_payment_approval_matrix"/>
                                <field name="group_is_payment_approval_matrix" invisible='1'/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_payment_approval_matrix" string="Payment Approval Matrix"/>
                                <div class="text-muted">
                                    Set the Payment Approval Matrix
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box" id="get_payment_voucher_approval_matrix" attrs="{'invisible': [('accounting' ,'=', False)]}">
                            <div class="o_setting_left_pane">
                                <field name="is_payment_voucher_approval_matrix"/>
                                <field name="group_is_payment_voucher_approval_matrix" invisible='1'/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_payment_voucher_approval_matrix" string="Payment Voucher Approval Matrix"/>
                                <div class="text-muted">
                                    Set the Payment Voucher Approval Matrix
                                </div>
                            </div>
                        </div>

                    </div>
                </div>                     
            </xpath>
        </field>
    </record>
</odoo>