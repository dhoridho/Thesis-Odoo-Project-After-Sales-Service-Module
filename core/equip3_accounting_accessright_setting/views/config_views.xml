<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form_accessright_setting" model="ir.ui.view">
        <field name="name">mr_config_settings_view_form_accessright_setting</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='update_exchange_rates']" position="after">
                <div class="col-12 col-lg-6 o_setting_box"
                    id="mr_inverse_rate"
                    attrs="{'invisible': [('group_multi_currency', '=', False)]}">
                    <div class="o_setting_left_pane">
                        <field name="is_inverse_rate"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="is_inverse_rate"/>
                        <div class="text-muted" id="mr_inverse_rate_info">
                            Use Inverse Rate
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6 o_setting_box"
                    id="mr_taxes_rate"
                    attrs="{'invisible': [('group_multi_currency', '=', False)]}">
                    <div class="o_setting_left_pane">
                        <field name="is_taxes_rate"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="is_taxes_rate"/>
                        <div class="text-muted" id="mr_taxes_rate_info">
                            Taxes have different exchange rate
                        </div>
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[@id='taxcloud_settings']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@id='intrastat_statistics']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@id='show_sale_receipts']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@id='account_batch_payment']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@id='collect_customer_payment']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@id='account_vendor_bills']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@data-key='account']/h2[6]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@id='account_vendor_bills']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@data-key='account']/h2[7]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@id='print_vendor_checks_setting_container']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@data-key='account']/t[1]/h2[1]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@id='bank_cash']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@id='update_exchange_rates']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@id='account_budget']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@id='account_budget']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" 
                     id="equp3_om_account_budget" 
                     groups="account.group_account_user">
                    
                    <div class="o_setting_left_pane">
                        <field name="module_om_account_budget"/>
                    </div>
                    <div class="o_setting_right_pane" id="om_budget_management">
                        <label for="module_om_account_budget"/>
                        <div class="text-muted">
                            Use budgets to compare actual with expected revenues and costs
                        </div>
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[@id='track_costs_revenues']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

             <xpath expr="//div[@id='monitor_product_margins']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>


            <xpath expr="//div[@id='tag_analytic_entries']" position="replace">
                <div class="col-12 col-lg-6 o_setting_box"
                    id="mr_tag_analytic_entries"
                    groups="account.group_account_user">
                    <div class="o_setting_left_pane">
                    <!-- analytic group -->
                        <field name="group_analytic_tags" string="Analytic Groups"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="group_analytic_tags" string="Analytic Groups"/>
                        <div class="text-muted">
                            Allow to manage analytic distributions
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
