<odoo>
    <data>

        <record id="journal_for_cashadvance" model="account.journal">
            <field name="name">Cash Advance</field>
            <field name="type">general</field>
            <field name="code">CA</field>
        </record>

        <record id="accountadvance_for_cashadvance" model="account.account">
            <field name="name">Cash Advance</field>
            <field name="code">11210090</field>
            <field name="user_type_id">1</field>
            <field name="reconcile">True</field>
        </record>

        <record id="module_category_petty_cash" model="ir.module.category">
              <field name="name">Petty Cash</field>
              <field name="sequence" eval="20" />
         </record>
        <record id="group_voucher_submitter" model="res.groups">
            <field name="name">Voucher Submitter</field>
            <field name="category_id" ref="module_category_petty_cash"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
       </record>

        <record id="group_voucher_manager_petty" model="res.groups">
            <field name="name">Voucher Manager</field>
            <field name="category_id" ref="module_category_petty_cash"/>
            <field name="implied_ids" eval="[(4, ref('group_voucher_submitter'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
       </record>

    </data>
</odoo>
