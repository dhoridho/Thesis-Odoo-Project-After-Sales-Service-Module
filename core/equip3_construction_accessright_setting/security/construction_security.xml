<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id ="abs_construction_management.module_category_construction_management" model ="ir.module.category">
            <field name="name">Construction Management</field>
            <field name="sequence">100</field>
        </record>

        <record id ="category_construction_management" model ="ir.module.category">
            <field name="name">Construction</field>
            <field name="parent_id" ref="abs_construction_management.module_category_construction_management"/>
            <field name="sequence">1</field>
        </record>
        
        <!-- Group Construction -->
        <record id="abs_construction_management.group_construction_user" model="res.groups">
            <field name="name">Site Worker</field>
            <field name="category_id" ref="equip3_construction_accessright_setting.category_construction_management"/>
            <field name="implied_ids" eval="[(4,ref('project.group_project_user'))]"/>
        </record>

        <record id="group_construction_engineer" model="res.groups">
            <field name="name">Site Engineer</field>
            <field name="category_id" ref="equip3_construction_accessright_setting.category_construction_management"/>
            <field name="implied_ids" eval="[(4,ref('abs_construction_management.group_construction_user'))]"/>
        </record>

        <record id="abs_construction_management.group_construction_manager" model="res.groups">
            <field name="name">Project Manager</field>
            <field name="category_id" ref="equip3_construction_accessright_setting.category_construction_management"/>
            <field name="implied_ids" eval="[(4,ref('equip3_construction_accessright_setting.group_construction_engineer'))]"/>
        </record>

        <record id="group_construction_director" model="res.groups">
            <field name="name">Director</field>
            <field name="category_id" ref="equip3_construction_accessright_setting.category_construction_management"/>
            <field name="implied_ids" eval="[(4,ref('abs_construction_management.group_construction_manager'))]"/>
        </record>

        <record id="group_construction_administrator" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="equip3_construction_accessright_setting.category_construction_management"/>
            <field name="implied_ids" eval="[(4,ref('equip3_construction_accessright_setting.group_construction_director'))]"/>
        </record>

</odoo>
