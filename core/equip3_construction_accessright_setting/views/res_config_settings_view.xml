<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="construction_sale_res_config_settings_views_forms" model="ir.ui.view">
        <field name="name">construction.sale.res.config.settings.inherit.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="equip3_general_setting.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='implementor_general_purchase']" position="before">
                <div id="implementor_general_Construction">
                    <h2>Construction</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="implementor_Construction">
                            <div class="o_setting_left_pane ">
                                <field name="construction"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Construction" for="construction"/>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container" attrs="{'invisible': [('construction', '=', False )]}">
                        <!-- cost sheet boolean approval matrix -->
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="cost_sheet_approval_matrix" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="cost_sheet_approval_matrix" />
                                <div class="text-muted">
                                    Set On/Off Cost Sheet Approval Matrix
                                </div>
                            </div>
                        </div>
                        <!-- project budget boolean approval matrix -->
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_project_budget_approval_matrix" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_project_budget_approval_matrix" />
                                <div class="text-muted">
                                    Set On/Off Periodical Budget Approval Matrix
                                </div>
                            </div>
                        </div>
                        <!-- budget carry over boolean approval matrix -->
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="budget_carry_over_approval_matrix" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="budget_carry_over_approval_matrix" />
                                <div class="text-muted">
                                    Set On/Off Budget Carry Over Approval Matrix
                                </div>
                            </div>
                        </div>
                        <!-- budget change request boolean approval matrix -->
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="budget_change_request_approval_matrix" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Budget Change Request Approval Matrix"
                                    for="budget_change_request_approval_matrix" />
                                <div class="text-muted">
                                    Set On/Off Budget Change Request Approval Matrix
                                </div>
                            </div>
                        </div>
                        <!-- change allocation approval matrix boolean -->
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_change_allocation_approval_matrix" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Change Allocation Budget Approval Matrix"
                                    for="is_change_allocation_approval_matrix" />
                                <div class="text-muted">
                                    Set On/Off Change Allocation Budget Approval Matrix
                                </div>
                            </div>
                        </div>
                        <!-- project budget transfer approval matrix boolean -->
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="project_budget_transfer_approval_matrix" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Project Budget Transfer Approval Matrix"
                                    for="project_budget_transfer_approval_matrix" />
                                <div class="text-muted">
                                    Set On/Off Project Budget Transfer Approval Matrix
                                </div>
                            </div>
                        </div>
                        <!-- progress history approval matrix boolean -->
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_progress_history_approval_matrix" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Progress History Approval Matrix"
                                    for="is_progress_history_approval_matrix" />
                                <div class="text-muted">
                                    Set On/Off Progress History Approval Matrix
                                </div>
                            </div>
                        </div>
                        <!-- asset allocation approval matrix boolean -->
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_asset_allocation_approval_matrix" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_asset_allocation_approval_matrix" />
                                <div class="text-muted">
                                    Set On/Off Asset Allocation Approval Matrix
                                </div>
                            </div>
                        </div>
                        <!-- claim request approval matrix boolean -->
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_claim_request_approval_matrix" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_claim_request_approval_matrix" />
                                <div class="text-muted">
                                    Set On/Off Claim Request Approval Matrix
                                </div>
                            </div>
                        </div>
                        <!-- BOQ approval matrix boolean -->
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_job_estimate_approval_matrix" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_job_estimate_approval_matrix" string="BOQ Approval Matrix"/>
                                <div class="text-muted">
                                    Set On/Off BOQ Approval Matrix
                                </div>
                            </div>
                        </div>
                        <!-- constract approval matrix boolean -->
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_customer_approval_matrix_const" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_customer_approval_matrix_const" />
                                <div class="text-muted">
                                    Set On/Off Sale Order Approval Matrix
                                </div>
                                <field name="temp_const" invisible="1" />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
   

    <record id='construction_res_config_settings_view_form' model="ir.ui.view">
        <field name='name'>inherit.form.view.res.config.setting.construction</field>
        <field name="model">res.config.settings</field>
        <field name='inherit_id' ref="base.res_config_settings_view_form"/>
        <field name='arch' type="xml">
            <xpath expr="//div[hasclass('settings')]" position='inside'>
                <div class="app_settings_block" data-string="Construction" data-key="equip3_construction_accessright_setting">
                    <h2 id="construction_project_configuration">Project</h2>
                    <!-- <h2 id="construction_sales_configuration">Sales</h2> -->
                    <!-- <h2 id="construction_purchase_configuration">Purchase</h2> -->
                    <h2 id="construction_budget_configuration">Budget</h2>
                    <h2 id="construction_accounting_configuration">Accounting</h2>
                </div>
            </xpath>
        </field>
    </record>

    <record id='construction_masterdata_res_config_settings_preview_form' model="ir.ui.view">
        <field name='name'>inherit.form.preview.res.config.setting.construction.masterdata</field>
        <field name="model">res.config.settings</field>
        <field name='inherit_id' ref="construction_res_config_settings_view_form"/>
        <field name='arch' type="xml">
            <xpath expr="//div[@data-key='equip3_construction_accessright_setting']/h2[@id='construction_accounting_configuration']" position='after'>
                <div class="row mt16 o_settings_container" name="accounting_cons_1">
                    <div class="col-12 col-lg-6 o_setting_box" id="implementor_accounting_cons_1">
                        <div class="row mt16 o_settings_container">
                            <div class="o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="is_create_default_analytic_group"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="is_create_default_analytic_group"/>
                                    <div class="text-muted">
                                        Create default analytic group based on project
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[@data-key='equip3_construction_accessright_setting']/h2[@id='construction_budget_configuration']" position='after'>
                <div class="row mt16 o_settings_container" name="budget_cons_1">
                    <div class="col-12 col-lg-6 o_setting_box" id="implementor_budget_cons_1">
                        <div class="row mt16 o_settings_container">
                            <div class="o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="cons_use_code"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="cons_use_code"/>
                                    <div class="text-muted">
                                        Can use code on project scope, section, and group of product
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mt16 o_settings_container">
                            <div class="o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="is_multiple_budget_procurement"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="is_multiple_budget_procurement"/>
                                    <div class="text-muted">
                                        Can use multiple budget on procurement operation
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[@data-key='equip3_construction_accessright_setting']/h2[@id='construction_project_configuration']" position='after'>
                <div class="row mt16 o_settings_container" name="construction">
                    <div class="row mt16 o_settings_container" id="tasks_management">
                        
                        <div id="use_collaborative_pad" class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_pad"/>
                            </div>
                            <div class="o_setting_right_pane" name="pad_project_right_pane">
                                <label for="module_pad"/>
                                <div class="text-muted">
                                    Edit tasks' description collaboratively in real time. See each author's text in a distinct color.
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="group_subtask_project"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="group_subtask_project"/>
                                <div class="text-muted">
                                    Split your tasks to organize your work into sub-milestones
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" id="track_customer_satisfaction_setting">
                            <div class="o_setting_left_pane">
                                <field name="group_project_rating"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="group_project_rating"/>
                                <div class="text-muted">
                                    Track customer satisfaction on tasks
                                </div>
                                <div class="content-group" attrs="{'invisible': [('group_project_rating', '=', False)]}">
                                    <div class="mt8">
                                        <button name="%(project.open_task_type_form)d" icon="fa-arrow-right" type="action" string="Set a Rating Email Template on Stages" class="btn-link"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" id="recurring_tasks_setting">
                            <div class="o_setting_left_pane">
                                <field name="group_project_recurring_tasks"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="group_project_recurring_tasks"/>
                                <div class="text-muted">
                                    Auto-generate tasks for regular activities
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" name="project_time_management">
                            <div class="o_setting_left_pane">
                                <field name="module_project_forecast" widget="upgrade_boolean"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_project_forecast"/>
                                <div class="text-muted" name="project_forecast_msg">
                                    Plan resource allocation across projets and tasks, and estimate deadlines more accurately
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id='construction_masterdata_inherit_project_res_config_settings_view_form' model="ir.ui.view">
        <field name='name'>inherit.form.view.res.config.setting.project.construction</field>
        <field name="model">res.config.settings</field>
        <field name='inherit_id' ref="project.res_config_settings_view_form"/>
        <field name='arch' type="xml">
            <xpath expr="//div[@data-key='project']" position='attributes'>
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>


     <record id="action_construction_configuration" model="ir.actions.act_window">
        <field name="name">General Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'equip3_construction_accessright_setting'}</field>
    </record>

</odoo>