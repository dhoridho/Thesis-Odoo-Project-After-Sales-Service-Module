<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="res_partner_industry_view_tree" model="ir.ui.view">
            <field name="name">res.partner.industry.tree</field>
            <field name="model">res.partner.industry</field>
            <field name="arch" type="xml">
                <tree string="Industries">
                    <field name="name" string="Industry"/>
                    <field name="full_name" string="Description"/>
                    
                </tree>
            </field>
        </record>

        <record id="res_partner_industry_view_form" model="ir.ui.view">
            <field name="name">res_partner_industry.view.form</field>
            <field name="model">res.partner.industry</field>
            <field name="arch" type="xml">
                <form string="Industries">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" string="Industry" required="1"/>
                                <field name="full_name" string="Description"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter" >
                        <field name="message_follower_ids" id="message_follower_ids"/>
                        <field name="activity_ids"  id="activity_ids"/>
                        <field name="message_ids"  id="message_ids"/>
                    </div>
                </form>
            </field>
        </record>



        <record id="partner_indusries_action" model="ir.actions.act_window">
            <field name="name">Industries</field>
            <field name="res_model">res.partner.industry</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('res_partner_industry_view_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('res_partner_industry_view_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    create Industries
                </p>
              
                
            </field>
        </record>



