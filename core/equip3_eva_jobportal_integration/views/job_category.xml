<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="job_category_view_tree" model="ir.ui.view">
            <field name="name">job_category.view.tree</field>
            <field name="model">job.category</field>
            <field name="arch" type="xml">
                <tree string="Job Category" >
                    <field name="name" string="Job Category"/>
                    <field name="description" string="Description"/>
                    
                </tree>
            </field>
        </record>

        <record id="job_category_view_form" model="ir.ui.view">
            <field name="name">job_category.view.form</field>
            <field name="model">job.category</field>
            <field name="arch" type="xml">
                <form string="Job Category">
                    <sheet>
                        <group>
                            <group >
                                <field name="name" string="Job Category" required="1"/>
                                <field name="description" string="Description"/>
                                
                            </group>
                    
                        </group>
                    </sheet>
                    <div class="oe_chatter" >
                        <field name="message_follower_ids" id="message_follower_ids"/>
                        <field name="activity_ids"  id="activity_ids"/>
                        <field name="message_ids"  id="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="job_category_action" model="ir.actions.act_window">
            <field name="name"> Job Category</field>
            <field name="res_model">job.category</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    create Industries
                </p>
                
            </field>
        </record>


