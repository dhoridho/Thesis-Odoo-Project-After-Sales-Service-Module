<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="hr_job_inherit_module_name" model="ir.ui.view">
            <field name="name">eva.hr.job.view.form.inherit</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_hr_job_form"/>
            <field name="arch" type="xml">

                <xpath expr="//sheet/notebook" position="inside">
                    <page string="Job Portal">
                        <div >
                            <label for="is_published_clone" string="Published"/>
                            <field name="is_published_clone"/>

                            <label for="is_salary_confidential" string="Salary Confidential"/>
                            <field name="is_salary_confidential"/>
                        </div>
                        <group name="job_portal" >
                            <group >
                                <field name="job_type" />
                                <field name="workplace_type" />
                                <field name="experience_level" />
                                <field name="experience_length" />
                                <field name="vacancy_deadline" />

                                
                            </group>
                            <group>
                                <field name="minimum_salary" />
                                <field name="maximum_salary" />
                                <field name="currency_job_id" string="Currency"/>
                                <field name="scheduled_pay" />
                            </group>
                            
                        </group>
                    </page>
                  
                </xpath>
                
            </field>
        </record>
    
        
    
    </data>
    

</odoo>
