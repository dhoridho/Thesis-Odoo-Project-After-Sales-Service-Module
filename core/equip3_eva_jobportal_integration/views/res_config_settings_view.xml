<?xml version="1.0"?>
<odoo>
    <record id="res_config_settings_eva_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.eva.job.portal.integration.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="75"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='app_settings_block']/div[@name='recruitment_process_div']" position="after">
                <h2>EVA Job Portal Integration</h2>
                <div class="row mt16 o_settings_container" name="eva_integration_setting_container">
                    <div class="col-12 col-lg-12 o_setting_box" id="eva_integration_setting">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <div class="row mt8">
                                <field name="validate_api_eva_job_portal" invisible='1'/>
                                <field name="validate_api_eva_first" invisible='1'/>
                                <field name="validate_eva_job_portal_fail" invisible='1'/>
                            </div>
                            <div class="row mt8">
                                <label for="is_eva_job_portal_integration" name="EVAL Job Portal Integration" class="col-lg-3"/>
                                <field name="is_eva_job_portal_integration"/>
                            </div>
                            <div class="row mt8" attrs="{'invisible': [('is_eva_job_portal_integration', '!=', True)]}">
                                <label for="login_url_info" class="col-lg-3" name="Valid URL Info"/>
                                <field name="login_url_info" readonly="1"/>
                               
                            </div>
                            <div class="row mt8" attrs="{'invisible': [('is_eva_job_portal_integration', '!=', True)]}">
                                <label for="eva_job_portal_url" class="col-lg-3"/>
                                <field name="eva_job_portal_url" />
                               
                                <span class="o_light_label" attrs="{'invisible': ['|',('validate_eva_job_portal_fail', '!=', True),('validate_api_eva_first', '=', False)]}" style="color:red"> Authentication failed</span>
                                <span class="o_light_label" attrs="{'invisible': ['|',('validate_api_eva_job_portal', '!=', True),('validate_api_eva_first', '=', False)]}" style="color:green;"> Authentication is Valid !</span>
                            </div>
                             <div class="text-muted">
                                    (Example: https://eva-jobportal-dev.hashmicro.com)
                                </div>
                            
                            <div class="row mt8" attrs="{'invisible': [('is_eva_job_portal_integration', '!=', True)]}">
                                <label for="eva_job_portal_username" class="col-lg-3"/>
                                <field name="eva_job_portal_username" attrs="{'required': [('eva_job_portal_url', '!=', False)]}"/>
                            </div>
                            <div class="row mt8" attrs="{'invisible': [('is_eva_job_portal_integration', '!=', True)]}">
                                <label for="eva_job_portal_password" class="col-lg-3"/>
                                <field name="eva_job_portal_password" password="True" attrs="{'required': [('eva_job_portal_url', '!=', False)]}"/>
                            </div>
                            <div class="text-muted">
                                please save before validating the job portal integration connector
                            </div>
                            <div class="row mt8" attrs="{'invisible': [('is_eva_job_portal_integration', '!=', True)]}">
                                <button name="cek_eva_job_portal_credential" type="object" string="Validate" class="btn-primary" />
                            </div>
                        </div>
                    </div>
                </div>
                         
                                
                
            </xpath>

            
        </field>
    </record>
</odoo>