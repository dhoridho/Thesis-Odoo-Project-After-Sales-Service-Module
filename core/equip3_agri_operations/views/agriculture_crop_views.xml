<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_agriculture_crop_mgmt_tree" model="ir.ui.view">
        <field name="name">agriculture.crop.mgmt.tree</field>
        <field name="model">agriculture.crop</field>
        <field name='inherit_id' ref="equip3_agri_masterdata.view_agriculture_crop_mgmt_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='crop']" position="after">
                <field name="lot_id"/>
            </xpath>
        </field>
    </record>

    <record id="view_agriculture_crop_mgmt_form" model="ir.ui.view">
        <field name="name">agriculture.crop.mgmt.form</field>
        <field name="model">agriculture.crop</field>
        <field name="inherit_id" ref="equip3_agri_masterdata.view_agriculture_crop_mgmt_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='block_id']" position="after">
                <field name="lot_id"/>
            </xpath>
            <xpath expr="//sheet" position="inside">
                <notebook>
                    <page name="history" string="History">
                        <field name="history_ids">
                            <tree string="History">
                                <field name="crop_id" invisible="1"/>
                                <field name="activity_line_id"/>
                                <field name="activity_record_id"/>
                                <field name="activity_id"/>
                                <field name="previous_qty"/>
                                <field name="adjusted_qty"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>

    <record id="view_agriculture_crop_mgmt_search" model="ir.ui.view">
        <field name="name">agriculture.crop.mgmt.search</field>
        <field name="model">agriculture.crop</field>
        <field name="inherit_id" ref="equip3_agri_masterdata.view_agriculture_crop_mgmt_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search/field[@name='block_id']" position="after">
                <field name="lot_id"/>
            </xpath>
            <xpath expr="//group" position="inside">
                <filter name="groupby_lot_id" domain="[]" context="{'group_by': 'lot_id'}"/>
            </xpath>
            <xpath expr="//searchpanel" position="inside">
                <field name="lot_id"/>
            </xpath>
        </field>
    </record>

</odoo>