<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_settings_view_form_implementor" model="ir.ui.view">
            <field name="name">agri.res.config.settings.view.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="equip3_general_setting.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='implementor_agriculture']/parent::div" position="after">
                    <div class="row mt16 o_settings_container" attrs="{'invisible': [('agriculture', '=', False)]}">
                        <div class="col-12 col-lg-6 o_setting_box" id="implementor_agriculture_monthly_planing">
                            <div class="o_setting_left_pane">
                                <field name="agriculture_monthly_planning"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Monthly Planning" for="agriculture_monthly_planning"/>
                                <div class="text-muted">
                                    If switched on will breakdown harvest planning to months and year
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.agriculture</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="99"/>
            <field name="inherit_id" ref="equip3_agri_masterdata.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='agriculture_general_settings']" position="after">
                    
                    <h2>Approval Matrix</h2>
                    <div class="row mt16 o_settings_container" name="approval_matrix_agriculture_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="agriculture_daily_activity">
                            <div class="o_setting_left_pane">
                                <field name="agriculture_daily_activity"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="agriculture_daily_activity" string="Plantation Plan"/>
                                <div class="text-muted">
                                    Activate Approval Matrix For Agriculture Plantation Plan
                                </div>
                                <div class="content-group mt-3" attrs="{'invisible': [('agriculture_daily_activity', '=', False)]}">
                                    <field name="agriculture_daily_activity_wa_notif" class="oe_inline"/>
                                    <label for="agriculture_daily_activity_wa_notif" string="WhatsApp Notification"/>
                                    <div class="text-muted">
                                        Will send whatsapp notifications when there is a request for approval
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
