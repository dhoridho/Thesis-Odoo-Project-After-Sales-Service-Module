<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_other_activity_line_tree" model="ir.ui.view">
        <field name="name">view.other.activity.line.tree</field>
        <field name="model">agriculture.daily.activity.line</field>
        <field name="inherit_id" ref="equip3_agri_operations.view_daily_activity_line_tree"/>
        <field name="mode">primary</field>
        <field name="priority" eval="1000"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="string">Other Activity Lines</attribute>
            </xpath>

            <xpath expr="//field[@name='block_id']" position="attributes">
                <attribute name="string">Block</attribute>
            </xpath>

            <xpath expr="//field[@name='daily_activity_id']" position="attributes">
                <attribute name="string">Other Activity Plan</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_other_activity_line_form" model="ir.ui.view">
        <field name="name">view.other.activity.line.form</field>
        <field name="model">agriculture.daily.activity.line</field>
        <field name="inherit_id" ref="equip3_agri_operations.view_daily_activity_line_form"/>
        <field name="mode">primary</field>
        <field name="priority" eval="1000"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="attributes">
                <attribute name="string">Other Activity Lines</attribute>
            </xpath>

            <xpath expr="//field[@name='activity_id']" position="attributes">
                <attribute name="domain">[('category_type', '=', 'other')]</attribute>
            </xpath>

            <xpath expr="//field[@name='block_id']" position="attributes">
                <attribute name="string">Block</attribute>
            </xpath>

            <xpath expr="//page[@name='activity_record_ids']" position="attributes">
                <attribute name="string">Other Activity Record</attribute>
            </xpath>

            <xpath expr="//field[@name='activity_record_ids']" position="attributes">
                <attribute name="context">{
                    'form_view_ref': 'equip3_agri_operations.view_other_activity_record_form'
                }</attribute>
            </xpath>

            <xpath expr="//field[@name='nursery_ids']//field[@name='activity_record_id']" position="attributes">
                <attribute name="string">Other Activity Record</attribute>
            </xpath>

            <xpath expr="//field[@name='harvest_ids']//field[@name='activity_record_harvest_id']" position="attributes">
                <attribute name="string">Other Activity Record</attribute>
            </xpath>

            <xpath expr="//field[@name='material_ids']//field[@name='activity_record_material_id']" position="attributes">
                <attribute name="string">Other Activity Record</attribute>
            </xpath>

            <xpath expr="//field[@name='asset_ids']//field[@name='activity_record_id']" position="attributes">
                <attribute name="string">Other Activity Record</attribute>
            </xpath>

            <xpath expr="//page[@name='activity_record_ids']" position="attributes">
                <attribute name="string">Other Activity Record</attribute>
            </xpath>

            <xpath expr="//field[@name='activity_record_ids']/tree" position="attributes">
                <attribute name="string">Other Activity Record</attribute>
            </xpath>

            <xpath expr="//field[@name='worker_group_ids']//field[@name='activity_record_id']" position="attributes">
                <attribute name="string">Other Activity Record</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_other_activity_line_search" model="ir.ui.view">
        <field name="name">view.other.activity.line.search</field>
        <field name="model">agriculture.daily.activity.line</field>
        <field name="inherit_id" ref="equip3_agri_operations.view_daily_activity_line_search"/>
        <field name="mode">primary</field>
        <field name="priority" eval="1000"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="attributes">
                <attribute name="string">Other Activity Lines</attribute>
            </xpath>

            <xpath expr="//field[@name='block_id']" position="attributes">
                <attribute name="string">Block</attribute>
            </xpath>

            <xpath expr="//filter[@name='groupby_block_id']" position="attributes">
                <attribute name="string">Block</attribute>
            </xpath>

            <xpath expr="//filter[@name='groupby_daily_activity_id']" position="attributes">
                <attribute name="string">Other Activity Plan</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_other_activity_line_calendar" model="ir.ui.view">
        <field name="name">view.other.activity.line.calendar</field>
        <field name="model">agriculture.daily.activity.line</field>
        <field name="inherit_id" ref="equip3_agri_operations.view_daily_activity_line_calendar"/>
        <field name="mode">primary</field>
        <field name="priority" eval="1000"/>
        <field name="arch" type="xml">
            <xpath expr="//calendar" position="attributes">
                <attribute name="string">Other Activity Lines</attribute>
            </xpath>

            <xpath expr="//field[@name='block_id']" position="attributes">
                <attribute name="string">Block</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_other_activity_line_pivot" model="ir.ui.view">
        <field name="name">view.other.activity.line.pivot</field>
        <field name="model">agriculture.daily.activity.line</field>
        <field name="priority" eval="1000"/>
        <field name="arch" type="xml">
            <pivot string="Other Activity Lines" sample="1">
                <field name="block_id" string="Block"/>
            </pivot>
        </field>
    </record>

    <record id="action_view_other_activity_lines" model="ir.actions.act_window">
        <field name="name">Other Activity Lines</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">agriculture.daily.activity.line</field>
        <field name="view_mode">tree,form,kanban,pivot,calendar</field>
        <field name="view_ids" eval="[(5,),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('equip3_agri_operations.view_other_activity_line_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('equip3_agri_operations.view_other_activity_line_form')}),
            (0, 0, {'view_mode': 'pivot', 'view_id': ref('equip3_agri_operations.view_other_activity_line_pivot')}),
            (0, 0, {'view_mode': 'calendar', 'view_id': ref('equip3_agri_operations.view_other_activity_line_calendar')}),
        ]"/>
        <field name="search_view_id" ref="equip3_agri_operations.view_other_activity_line_search"/>
        <field name="context">{'search_default_to_do': 1, 'default_daily_activity_type': 'other'}</field>
        <field name="domain">[
            ('daily_activity_type', '=', 'other'),
            '|', 
                ('daily_activity_id', '=', False), 
                '&amp;', 
                    ('daily_activity_id', '!=', False), 
                    ('state', 'not in', ('draft', 'to_be_approved', 'approved'))
        ]</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
           Create a new Other Activity Lines
          </p>
        </field>
    </record>

</odoo>