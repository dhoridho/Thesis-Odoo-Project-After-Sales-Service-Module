<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_agriculture_worker_group_tree" model="ir.ui.view">
        <field name="name">view.agriculture.worker.group.tree</field>
        <field name="model">agriculture.worker.group</field>
        <field name="arch" type="xml">
            <tree string="Worker Group">
                <field name="name"/>
                <field name="head_id"/>
            </tree>
        </field>
    </record>

    <record id="view_agriculture_worker_group_form" model="ir.ui.view">
        <field name="name">view.agriculture.worker.group.form</field>
        <field name="model">agriculture.worker.group</field>
        <field name="arch" type="xml">
            <form string="Worker Group">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="head_id" options="{'no_create_edit': True, 'no_create': True}"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                            <field name="is_branch_required" invisible="1"/>
                            <field name="branch_id" attrs="{'required': [('is_branch_required', '=', True)]}" options="{'no_create_edit': True, 'no_create': True}"/>
                            <field name="create_uid" string="Created By"/>
                            <field name="create_date" string="Created On"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Worker" name="worker_ids">
                            <field name="worker_ids">
                                <tree string="Worker">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_view_agriculture_worker_group" model="ir.actions.act_window">
        <field name="name">Worker Group</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">agriculture.worker.group</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Worker Group
            </p>
        </field>
    </record>

</odoo>