<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_daily_activity_line_tree" model="ir.ui.view">
        <field name="name">view.daily.culture.activity.line.tree</field>
        <field name="model">agriculture.daily.activity.line</field>
        <field name="arch" type="xml">
            <tree string="Plantation Lines" default_order="priority desc, date_scheduled desc, name desc">
                <field name="priority" widget="priority" nolabel="1"/>
                <field name="daily_activity_id"/>
                <field name="name"/>
                <field name="activity_id"/>
                <field name="block_id"/>
                <field name="worker_group_ids" widget="many2many_tags"/>
                <field name="notes"/>
                <field name="state" widget='badge' decoration-secondary="state == 'draft'"
                                                   decoration-warning3="state == 'to_be_approved'"
                                                   decoration-warning2="state == 'approved'"
                                                   decoration-danger="state == 'rejected'"
                                                   decoration-primary="state == 'confirm'"
                                                   decoration-warning="state == 'progress'"
                                                   decoration-success="state == 'done'"
                                                   decoration-danger3="state == 'cancel'"/>
            </tree>
        </field>
    </record>

    <record id="view_daily_activity_line_form" model="ir.ui.view">
        <field name="name">view.daily.culture.activity.line.form</field>
        <field name="model">agriculture.daily.activity.line</field>
        <field name="arch" type="xml">
            <form string="Plantation Lines">
                <header>
                    <field name="is_matrix_on" invisible="1"/>
                    <field name="daily_activity_type" invisible="1"/>
                    
                    <button name="button_confirm" string="Confirm" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('daily_activity_id', '!=', False), ('state', '!=', 'draft')]}"/>
                    <button name="action_actualization" string="Actualization" type="object" class="oe_highlight" attrs="{'invisible': [('state', 'not in', ('confirm', 'progress'))]}"/>
                    <button name="action_done" string="Mark As Done" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'progress')]}"/>
                    
                    <field name="state" widget="statusbar" statusbar_visible="draft,approved,progress,done" attrs="{'invisible': ['|', ('is_matrix_on', '!=', True), ('state', 'in', ['cancel', 'rejected'])]}"/>
                    <field name="state_1" widget="statusbar" statusbar_visible="draft,rejected,progress,done" attrs="{'invisible': ['|', ('is_matrix_on', '!=', True), ('state', '!=', 'rejected')]}"/>
                    <field name="state_2" widget="statusbar" statusbar_visible="draft,progress,done" attrs="{'invisible': ['|', ('is_matrix_on', '!=', False), ('state', '=', 'cancel')]}"/>
                    <field name="state_3" widget="statusbar" statusbar_visible="draft,confirm,cancel" attrs="{'invisible': [('state', '!=', 'cancel')]}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="priority" widget="priority" class="mr-3" attrs="{'readonly': [('daily_activity_id', '!=', False)]}" force_save="1"/>
                            <field name="name" nolabel="1"/>
                        </h1>
                    </div>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="action_view_moves" type="object" icon="o-hm-smart-all-product-move" attrs="{'invisible': [('moves_count', '=', 0)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="moves_count"/></span>
                                <span class="o_stat_text">Product<br/>Moves</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" name="action_view_planting_moves" type="object" icon="o-hm-smart-all-product-move" attrs="{'invisible': [('planting_moves_count', '=', 0)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="planting_moves_count"/></span>
                                <span class="o_stat_text">Planting<br/>Moves</span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="daily_activity_id" attrs="{'invisible': [('daily_activity_id', '=', False)]}"/>
                            <field name="date_scheduled" attrs="{'readonly': ['|', ('daily_activity_id', '!=', False), ('state', '!=', 'draft')]}" force_save="1"/>
                            <field name="is_whole_day"/>
                            <div class="o_row" attrs="{'invisible': [('is_whole_day', '=', True)]}">
                                <div class="o_td_label oe_inline mr-4">
                                    <label for="start_time"/>
                                    <field name="start_time" widget="datetime_timepicker" class="d-block" attrs="{'required': [('is_whole_day', '=', False)]}" options="{'datepicker': {'stepping': 30}}"/>
                                </div>
                                <div class="o_td_label oe_inline">
                                    <label for="end_time"/>
                                    <field name="end_time" widget="datetime_timepicker" class="d-block" attrs="{'required': [('is_whole_day', '=', False)]}" options="{'datepicker': {'stepping': 30}}"/>
                                </div>
                            </div>
                            <field name="activity_id" options="{'no_create_edit': True, 'no_create': True}" domain="[('category_type', '=', 'plantation')]"/>
                            <field name="category_type" invisible="1"/>
                            <field name="activity_type" invisible="1"/>
                            <field name="block_id" attrs="{'readonly': ['|', ('daily_activity_id', '!=', False), ('state', '!=', 'draft')]}" force_save="1" options="{'no_create_edit': True, 'no_create': True}" domain="[('use_type', '=', 'block')]"/>
                            <field name="allowed_sub_block_ids" widget="many2many_tags" invisible="1"/>
                            <field name="sub_block_id" options="{'no_create_edit': True, 'no_create': True}" attrs="{'invisible': [('allowed_sub_block_ids', '=', [])], 'required': [('allowed_sub_block_ids', '!=', [])]}"/>
                            <label for="size"/>
                            <div class="o_row">
                                <field name="size" class="oe_inline" required="1"/>
                                <field name="uom_id" class="oe_inline" force_save="1"/>
                            </div>

                            <field name="notes"/>
                            <field name="planting_move_ids" invisible="1"/>
                            <field name="agreement_id" options="{'no_create_edit': True, 'no_create': True}"/>
                        </group>
                        <group>
                            <field name="analytic_group_ids" widget="many2many_tags" attrs="{'readonly': ['|', ('daily_activity_id', '!=', False), ('state', '!=', 'draft')]}" force_save="1" options="{'no_create_edit': True, 'no_create': True}"/>
                            <field name="company_id"/>
                            <field name="is_branch_required" invisible="1"/>
                            <field name="branch_id" attrs="{'readonly': ['|', ('daily_activity_id', '!=', False), ('state', '!=', 'draft')], 'required': [('is_branch_required', '=', True)]}" force_save="1" options="{'no_create_edit': True, 'no_create': True}"/>
                            <field name="create_date" string="Created On" readonly="1" force_save="1"/>
                            <field name="create_uid" string="Created By" readonly="1" force_save="1"/>
                            <field name="crop_age" invisible="1"/>
                            <field name="worker_type" widget="radio"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="nursery_ids" string="Crop" attrs="{'invisible': [('activity_type', 'not in', ('planting', 'crop_adjustment'))]}">
                            <field name="nursery_ids"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"
                                   context="{
                                        'default_daily_activity_id': daily_activity_id,
                                        'default_block_id': block_id,
                                        'default_date': date_scheduled,
                                        'default_original_move': True,
                                        'crop_ids': crop_ids
                                    }">
                                <tree string="Crop" editable="bottom">
                                    <field name="activity_line_sequence" invisible="1"/>
                                    <field name="daily_activity_id" invisible="1"/>
                                    <field name="activity_line_id" invisible="1"/>
                                    <field name="activity_record_id" string="Plantation Record"/>
                                    <field name="block_id" invisible="1"/>
                                    <field name="crop_id" domain="[('id', 'in', context.get('crop_ids'))]"/>
                                    <field name="product_id" invisible="1"/>
                                    <field name="lot_id" attrs="{'invisible': [('parent.activity_type', '!=', 'crop_adjustment')]}" readonly="1" force_save="1"/>
                                    <field name="current_qty" attrs="{'invisible': [('parent.activity_type', '!=', 'crop_adjustment')]}" readonly="1" force_save="1"/>
                                    <field name="count"/>
                                    <field name="uom_id"/>
                                    <field name="date"/>
                                    <field name="original_move" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page name="harvest_ids" string="Harvest" attrs="{'invisible': [('harvest', '=', False)]}">
                            <field name="harvest_ids" 
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"
                                   context="{
                                        'default_daily_activity_harvest_id': daily_activity_id,
                                        'default_location_id': production_location_id,
                                        'default_location_dest_id': location_id,
                                        'default_date': date_scheduled,
                                        'default_date_deadline': date_scheduled,
                                        'default_company_id': company_id,
                                        'default_branch_id': branch_id,
                                        'default_name': name,
                                        'default_origin': name,
                                        'default_warehouse_id': warehouse_id,
                                        'default_block_id': block_id,
                                        'default_sub_block_id': sub_block_id
                                    }">
                                <tree string="Harvest" editable="bottom">
                                    <field name="daily_activity_harvest_id" invisible="1"/>
                                    <field name="activity_line_harvest_id" invisible="1"/>
                                    <field name="activity_record_harvest_id" string="Plantation Record"/>
                                    <field name="activity_harvest_id" invisible="1"/>
                                    <field name="block_id" invisible="1"/>
                                    <field name="sub_block_id" invisible="1"/>
                                    <field name="sequence" invisible="1"/>
                                    <field name="name" invisible="1"/>
                                    <field name="date" invisible="1"/>
                                    <field name="date_deadline" invisible="1"/>
                                    <field name="location_id" invisible="1"/>
                                    <field name="location_dest_id" invisible="1"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="branch_id" invisible="1"/>
                                    <field name="origin" invisible="1"/>
                                    <field name="warehouse_id" invisible="1"/>
                                    <field name="product_id" readonly="1" force_save="1"/>
                                    <field name="product_uom_qty" string="To Produce"/>
                                    <field name="quantity_done" string="Produced" readonly="1" force_save="1"/>
                                    <field name="product_uom"/>
                                    <field name="bunch"/>
                                    <field name="product_uom_category_id" invisible="1"/>
                                    <field name="state" widget="badge" decoration-success2="state == 'done'"/>
                                </tree>
                            </field>
                        </page>
                        <page name="material_ids" string="Material">
                            <field name="material_ids" 
                                   attrs="{'readonly': [('state', '!=', 'draft')]}" 
                                   context="{
                                        'default_daily_activity_material_id': daily_activity_id,
                                        'default_location_id': location_id,
                                        'default_location_dest_id': production_location_id,
                                        'default_date': date_scheduled,
                                        'default_date_deadline': date_scheduled,
                                        'default_company_id': company_id,
                                        'default_branch_id': branch_id,
                                        'default_name': name,
                                        'default_origin': name,
                                        'default_warehouse_id': warehouse_id,
                                        'default_picking_type_id': picking_type_id
                                   }">
                                <tree string="Material" editable="bottom">
                                    <field name="daily_activity_material_id" invisible="1"/>
                                    <field name="activity_line_material_id" invisible="1"/>
                                    <field name="activity_record_material_id" string="Plantation Record" options="{'no_create_edit': True, 'no_create': True}"/>
                                    <field name="activity_material_id" invisible="1"/>
                                    <field name="sequence" invisible="1"/>
                                    <field name="name" invisible="1"/>
                                    <field name="date" invisible="1"/>
                                    <field name="date_deadline" invisible="1"/>
                                    <field name="location_id" invisible="1"/>
                                    <field name="location_dest_id" invisible="1"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="branch_id" invisible="1"/>
                                    <field name="origin" invisible="1"/>
                                    <field name="warehouse_id" invisible="1"/>
                                    <field name="product_id" force_save="1" attrs="{'readonly': [('activity_material_id', '!=', False)]}" options="{'no_create_edit': True, 'no_create': True}"/>
                                    <field name="product_uom_qty" string="To Consume"/>
                                    <field name="quantity_done" string="Consumed" force_save="1" readonly="1"/>
                                    <field name="product_uom" options="{'no_create_edit': True, 'no_create': True}"/>
                                    <field name="product_uom_category_id" invisible="1"/>
                                    <field name="state" widget="badge" decoration-success="state == 'done'"/>
                                    <field name="picking_type_id" invisible="1"/>
                                    <button name="action_show_details" type="object" class="oe_highlight" attrs="{'invisible': [('parent.state', '!=', 'draft')]}" string="Details"/>
                                </tree>
                            </field>
                        </page>
                        <page name="crop_ids" string="Crops">
                            <field name="crop_ids" force_save="1">
                                <tree string="Crops">
                                    <field name="crop"/>
                                    <field name="crop_date"/>
                                    <field name="lot_id"/>
                                    <field name="crop_count"/>
                                </tree>
                            </field>
                        </page>
                        <page name="assets_ids" string="Asset">
                            <field name="asset_ids" 
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"
                                   context="{
                                        'default_daily_activity_id': daily_activity_id,
                                        'default_original_move': True
                                   }">
                                <tree string="Asset" editable="bottom">
                                    <field name="daily_activity_id" invisible="1"/>
                                    <field name="activity_line_id" invisible="1"/>
                                    <field name="activity_record_id" string="Plantation Record" options="{'no_create_edit': True, 'no_create': True}"/>
                                    <field name="activity_asset_id" invisible="1"/>
                                    <field name="asset_id" string="Asset" options="{'no_create': 1, 'no_create_edit': 1}"/>
                                    <field name="user_id" string="Responsible" options="{'no_create': 1, 'no_create_edit': 1}"/>
                                    <field name="original_move" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page name="activity_record_ids" string="Plantation Record" attrs="{'invisible': [('activity_record_ids', '=', [])]}">
                            <field name="activity_record_ids">
                                <tree string="Plantation Record" create="0" delete="0">
                                    <field name="name"/>
                                    <field name="activity_id"/>
                                    <field name="worker_group_ids" widget="many2many_tags"/>
                                    <field name="date_scheduled"/>
                                    <field name="state" widget="badge" decoration-primary="state == 'confirm'"/>
                                </tree>
                            </field>
                        </page>
                        <page name="worker_group_ids" string="Worker Group">
                            <field name="worker_group_ids" 
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"
                                   context="{
                                        'default_daily_activity_id': daily_activity_id,
                                        'default_original_move': True
                                   }">
                                <tree string="Worker Group" editable="bottom">
                                    <field name="daily_activity_id" invisible="1"/>
                                    <field name="activity_line_id" invisible="1"/>
                                    <field name="activity_record_id" string="Plantation Record" options="{'no_create_edit': True, 'no_create': True}"/>
                                    <field name="group_id" string="Name" options="{'no_create_edit': True, 'no_create': True}" attrs="{'column_invisible': [('parent.worker_type', '!=', 'with_group')], 'required': [('parent.worker_type', '=', 'with_group')]}"/>
                                    <field name="head_id" options="{'no_create_edit': True, 'no_create': True}" attrs="{'column_invisible': [('parent.worker_type', '!=', 'with_group')], 'required': [('parent.worker_type', '=', 'with_group')]}"/>
                                    <field name="worker_ids" widget="many2many_tags" options="{'no_create_edit': True, 'no_create': True}"/>
                                    <field name="original_move" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page name="cost_details" string="Cost Details" attrs="{'invisible': [('stock_valuation_layer_ids', '=', [])]}">
                            <field name="stock_valuation_layer_ids">
                                <tree string="Cost Details" default_order="activity_record_id">
                                    <field name="activity_record_id"/>
                                    <field name="product_id"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="value" string="Value"/>
                                </tree>
                            </field>
                        </page>
                        <page name="miscellaneous" string="Miscellaneous" invisible="1">
                            <group>
                                <group>
                                    <field name="estate_id"/>
                                    <field name="datetime_scheduled"/>
                                    <field name="location_id"/>
                                    <field name="production_location_id"/>
                                    <field name="warehouse_id"/>
                                    <field name="harvest"/>
                                    <field name="nursery"/>
                                    <field name="all_moves_done"/>
                                    <field name="picking_type_id"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_daily_activity_line_search" model="ir.ui.view">
        <field name="name">view.daily.activity.line.search</field>
        <field name="model">agriculture.daily.activity.line</field>
        <field name="arch" type="xml">
            <search string="Plantation Lines">
                <field name="daily_activity_id"/>
                <field name="name"/>
                <field name="activity_id"/>
                <field name="block_id"/>
                <field name="worker_group_ids" widget="many2many_tags"/>
                <field name="date_scheduled"/>
                <field name="state"/>

                <filter name="starred" string="Starred" domain="[('priority', '=', 1)]"/>

                <separator/>
                <filter name="state_draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="state_confirm" string="Confirmed" domain="[('state', '=', 'confirm')]"/>
                <filter name="state_progress" string="In Progress" domain="[('state', '=', 'progress')]"/>
                <filter name="state_done" string="Done" domain="[('state', '=', 'done')]"/>
                <filter name="state_cancel" string="Cancelled" domain="[('state', '=', 'cancel')]"/>

                <separator/>
                <filter name="filter_date_scheduled" string="Scheduled Date" date="date_scheduled"/>

                <group string="Group By...">
                    <filter name="groupby_daily_activity_id" string="Plantation Plan" domain="[]" context="{'group_by': 'daily_activity_id'}"/>
                    <filter name="groupby_block_id" string="Block" domain="[]" context="{'group_by': 'block_id'}"/>
                    <filter name="groupby_date_scheduled" string="Scheduled Date" domain="[]" context="{'group_by': 'date_scheduled'}"/>
                    <filter name="groupby_state" string="Status" domain="[]" context="{'group_by': 'state'}"/>
                </group>

                <searchpanel view_types="tree,kanban,pivot,graph">
                    <field name="activity_id"/>
                    <field name="block_id"/>
                    <!-- <field name="worker_group_ids"/> -->
                    <field name="state"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="view_daily_activity_line_kanban" model="ir.ui.view">
        <field name="name">view.daily.activity.line.kanban</field>
        <field name="model">agriculture.daily.activity.line</field>
        <field name="arch" type="xml">
            <kanban class="oe_background_grey o_kanban_dashboard" create="0" sample="1">
                <field name="name"/>
                <field name="daily_activity_id"/>
                <field name="state" readonly="1"/>
                <field name="block_id"/>
                <field name="create_uid"/>
                <field name="crop_ids"/>
                <field name="activity_id"/>
                <field name="date_scheduled"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_card_header o_kanban_record_top">
                                <div class="o_kanban_record_headings o_kanban_card_header_title">
                                    <strong class="o_primary ml8">
                                        <t t-if="record.daily_activity_id.value">
                                            <span><t t-esc="record.daily_activity_id.value"/></span> - 
                                        </t>
                                        <span><t t-esc="record.name.value"/></span>
                                    </strong>
                                    <div style="margin-top:10px; margin-left: 8px;">
                                        <t t-if="record.block_id.value">
                                            <span><t t-esc="record.block_id.value"/></span> - 
                                        </t>
                                        <span><t t-esc="record.activity_id.value"/></span>
                                    </div>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <h2>
                                        <span t-attf-class="badge #{['approved'].indexOf(record.state.raw_value) > -1 ? 'badge-warning' :['draft'].indexOf(record.state.raw_value) > -1 ? 'badge-secondary' : ['confirm'].indexOf(record.state.raw_value) > -1 ? 'badge-primary' : ['done'].indexOf(record.state.raw_value) > -1 ? 'badge-success' : 'badge-danger'}">
                                            <t t-esc="record.state.value"/>
                                        </span>
                                    </h2>
                                </div>
                            </div>
                            <div class="container o_kanban_record_bottom" style="padding-left: 8px;">
                                <h5 class="oe_kanban_bottom_left">
                                    <t t-esc="record.date_scheduled.value"/>
                                </h5>
                                <div class="oe_kanban_bottom_right">
                                    <img t-att-src="kanban_image('res.users', 'image_128', record.create_uid.raw_value)" class="oe_kanban_avatar" alt="Avatar"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_daily_activity_line_calendar" model="ir.ui.view">
        <field name="name">view.daily.activity.line.calendar</field>
        <field name="model">agriculture.daily.activity.line</field>
        <field name="arch" type="xml">
            <calendar date_start="date_scheduled" date_stop="date_scheduled_end" string="Plantation Lines" event_limit="5" quick_add="False">
                <field name="create_uid" avatar_field="image_128"/>
                <field name="activity_id"/>
                <field name="block_id"/>
                <field name="worker_group_ids"/>
                <field name="date_scheduled"/>
            </calendar>
        </field>
    </record>

    <record id="view_daily_activity_line_pivot" model="ir.ui.view">
        <field name="name">view.daily.activity.line.pivot</field>
        <field name="model">agriculture.daily.activity.line</field>
        <field name="arch" type="xml">
            <pivot string="Plantation Lines" sample="1">
            </pivot>
        </field>
    </record>

    <record id="action_view_daily_activity_line" model="ir.actions.act_window">
        <field name="name">Plantation Lines</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">agriculture.daily.activity.line</field>
        <field name="view_mode">tree,form,kanban,pivot,calendar</field>
        <field name="context">{'search_default_to_do': 1, 'default_daily_activity_type': 'plantation'}</field>
        <field name="domain">[
            ('daily_activity_type', '=', 'plantation'),
            '|', 
                ('daily_activity_id', '=', False), 
                '&amp;', 
                    ('daily_activity_id', '!=', False), 
                    ('state', 'not in', ('draft', 'to_be_approved', 'approved'))
        ]</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
           Create a new Plantation Lines
          </p>
        </field>
    </record>

</odoo>
