<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_agri_agreement_template_tree" model="ir.ui.view">
        <field name="name">view.agri.agreement.template.tree</field>
        <field name="model">agri.agreement.template</field>
        <field name="arch" type="xml">
            <tree string="Agri Agreement Template">
                <field name="name"/>
                <field name="company_id"/>
                <field name="agreement_type" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_agri_agreement_template_form" model="ir.ui.view">
        <field name="name">view.agri.agreement.template.form</field>
        <field name="model">agri.agreement.template</field>
        <field name="arch" type="xml">
            <form string="Agri Agreement Template">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Agreement Template Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <label for="period_start" string="Contract Period"/>
                            <div class="o_row">
                                <field name="period_start" class="oe_inline"/>
                                <field name="period_end" class="oe_inline"/>
                            </div>
                            <field name="branch_id"/>
                            <field name="agreement_type" invisible="1"/>
                        </group>
                        <group>
                            <field name="company_id" readonly="1" force_save="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="lines" string="Lines">
                            <field name="line_ids">
                                <tree string="Lines" editable="bottom">
                                    <field name="company_id" invisible="1"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="activity_id" domain="[('category_type', '=', parent.agreement_type)]"/>
                                    <field name="product_id"/>
                                    <field name="product_uom_qty"/>
                                    <field name="uom_id"/>
                                    <field name="uom_category_id" invisible="1"/>
                                    <field name="price"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_agri_agreement_tree" model="ir.ui.view">
        <field name="name">view.agri.agreement.tree</field>
        <field name="model">agri.agreement</field>
        <field name="arch" type="xml">
            <tree string="Agri Agreement">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="company_id"/>
                <field name="agreement_type" invisible="1"/>
                <field name="state" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_agri_agreement_form" model="ir.ui.view">
        <field name="name">view.agri.agreement.form</field>
        <field name="model">agri.agreement</field>
        <field name="arch" type="xml">
            <form string="Agri Agreement">
                <header>
                    <button name="action_confirm" type="object" string="Confirm" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_create_activity" type="object" string="Create Activity" class="oe_highlight" attrs="{'invisible': [('state', 'not in', ('confirm', 'progress'))]}"/>
                    <button name="action_create_bill" type="object" string="Create Bill" class="oe_highlight" attrs="{'invisible': ['|', ('state', '!=', 'progress'), ('can_create_bill', '=', False)]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Agreement Name"/>
                        </h1>
                    </div>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="action_view_bills" type="object" icon="fa-money" attrs="{'invisible': [('bills_count', '=', 0)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="bills_count"/></span>
                                <span class="o_stat_text">Vendor Bills</span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <div class="row">
                            <div class="col" name="group1">
                                <group>
                                    <field name="reference"/>
                                    <field name="partner_id"/>
                                    <field name="template_id"/>
                                    <label for="date_start" string="Contract Period"/>
                                    <div class="o_row">
                                        <field name="date_start" class="oe_inline"/>
                                        <field name="date_end" class="oe_inline"/>
                                    </div>

                                    <field name="next_contract_sequence" invisible="1"/>
                                    <field name="agreement_type" invisible="1"/>
                                    <field name="usage_form_view_ref" invisible="1"/>
                                    <field name="bill_ids" invisible="1"/>
                                    <field name="can_create_bill" invisible="1"/>
                                </group>
                            </div>
                            <div class="col" name="group2">
                                <group>
                                    <field name="estate_id"/>
                                    <field name="block_ids" widget="many2many_tags" attrs="{'invisible': [('agreement_type', '=', 'nursery')], 'required': [('agreement_type', '!=', 'nursery')]}"/>
                                    <field name="block_ids" widget="many2many_tags" attrs="{'invisible': [('agreement_type', '!=', 'nursery')], 'required': [('agreement_type', '=', 'nursery')]}" string="Nursery Areas"/>
                                    <field name="block_use_type" invisible="1"/>
                                    <field name="analytic_tag_ids" widget="many2many_tags" required="1"/>
                                </group>
                            </div>
                            <div class="col" name="group3">
                                <group>
                                    <field name="branch_id"/>
                                    <field name="company_id" readonly="1" force_save="1"/>
                                    <field name="create_uid" string="Created By"/>
                                    <field name="create_date" string="Created On"/>
                                    <field name="activity_record_ids" invisible="1"/>
                                </group>
                            </div>
                        </div>
                    </group>
                    <notebook>
                        <page name="agreement_lines" string="Agreement Lines">
                            <field name="contract_ids" context="{
                                'default_sequence': next_contract_sequence,
                                'form_view_ref': 'equip3_agri_operations.view_agri_agreement_contract_form'
                            }">
                                <tree string="Agreement Lines" editable="bottom">
                                    <field name="sequence"/>
                                    <field name="activity_id" domain="[('category_type', '=', parent.agreement_type)]"/>
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="price"/>
                                    <field name="product_uom_qty"/>
                                    <field name="done_qty" attrs="{'column_invisible': [('parent.state', 'not in', ('progress', 'to_close'))]}"/>
                                    <field name="to_bill_qty"/>
                                    <field name="billed_qty"/>
                                    <field name="uom_id"/>
                                    <field name="uom_category_id" invisible="1"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="can_create_bill" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page name="usage" string="Usage">
                            <field name="activity_line_ids" context="{'form_view_ref': usage_form_view_ref}">
                                <tree string="Usage" default_order="agreement_sequence" create="0">
                                    <field name="agreement_sequence" string="No"/>
                                    <field name="name" string="Activity Line"/>
                                    <field name="block_id"/>
                                    <field name="block_size"/>
                                    <field name="block_uom_id"/>
                                    <field name="date_scheduled"/>
                                    <field name="state" widget="badge"
                                           decoration-secondary="state == 'draft'"
                                           decoration-warning3="state == 'to_be_approved'"
                                           decoration-warning2="state == 'approved'"
                                           decoration-danger="state == 'rejected'"
                                           decoration-primary="state == 'confirm'"
                                           decoration-warning="state == 'progress'"
                                           decoration-success="state == 'done'"
                                           decoration-danger3="state == 'cancel'"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_agri_agreement_contract_form" model="ir.ui.view">
        <field name="name">view.agri.agreement.contract.form</field>
        <field name="model">agri.agreement.contract</field>
        <field name="arch" type="xml">
            <form string="Agreement Lines">
                <sheet>
                    <group>
                        <group>
                            <field name="agreement_id"/>
                            <field name="activity_id"/>
                            <field name="product_uom_qty"/>
                            <field name="uom_category_id"/>
                            <field name="currency_id"/>
                            <field name="done_qty"/>
                            <field name="billed_qty"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="product_id"/>
                            <field name="uom_id"/>
                            <field name="company_id"/>
                            <field name="price"/>
                            <field name="to_bill_qty"/>
                            <field name="can_create_bill"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Template -->
    <record id="action_view_nursery_agreement_template" model="ir.actions.act_window">
