<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_harvest_line_tree" model="ir.ui.view">
        <field name="name">view.harvest.line.tree</field>
        <field name="model">agriculture.daily.activity.line</field>
        <field name="inherit_id" ref="equip3_agri_operations.view_daily_activity_line_tree"/>
        <field name="mode">primary</field>
        <field name="priority" eval="1000"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="string">Harvest Lines</attribute>
            </xpath>

            <xpath expr="//field[@name='block_id']" position="attributes">
                <attribute name="string">Block</attribute>
            </xpath>

            <xpath expr="//field[@name='daily_activity_id']" position="attributes">
                <attribute name="string">Harvest Plan</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_harvest_line_form" model="ir.ui.view">
        <field name="name">view.harvest.line.form</field>
        <field name="model">agriculture.daily.activity.line</field>
        <field name="inherit_id" ref="equip3_agri_operations.view_daily_activity_line_form"/>
        <field name="mode">primary</field>
        <field name="priority" eval="1000"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="attributes">
                <attribute name="string">Harvest Lines</attribute>
            </xpath>

            <xpath expr="//field[@name='activity_id']" position="attributes">
                <attribute name="domain">[('category_type', '=', 'harvest')]</attribute>
            </xpath>

            <xpath expr="//field[@name='block_id']" position="attributes">
                <attribute name="string">Block</attribute>
            </xpath>

            <xpath expr="//field[@name='activity_type']" position="after">
                <field name="activity_harvest_type" invisible="1"/>
            </xpath>

            <xpath expr="//page[@name='harvest_ids']" position="attributes">
                <attribute name="attrs">{'invisible': [('activity_type', '!=', 'harvest')]}</attribute>
            </xpath>

            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" name="action_view_harvest_internal_transfer" type="object" icon="o-hm-smart-all-product-move" attrs="{'invisible': [('harvest_transfer_count', '=', 0)]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value"><field name="harvest_transfer_count"/></span>
                        <span class="o_stat_text">Transfers</span>
                    </div>
                </button>
            </xpath>

            <xpath expr="//page[@name='harvest_ids']//field[@name='product_id']" position="before">
                <field name="crop_ids" widget="many2many_tags" invisible="1"/>
                <field name="crop_id" domain="[('id', 'in', crop_ids)]" attrs="{'required': [('parent.activity_harvest_type', '=', 'logging')]}"/>
            </xpath>

            <xpath expr="//field[@name='harvest_ids']/tree" position="inside">
                <field name="agri_product_tracking" invisible="1"/>
                <button name="action_agri_show_details" class="oe_highlight" type="object" width="0.1" attrs="{'invisible': ['|', ('agri_product_tracking', 'not in', ('lot', 'serial')), ('state', '=', 'done')]}" options='{"warn": true}' string="Lot/Serial Number" style="padding: 5px;"/>
            </xpath>

            <xpath expr="//page[@name='activity_record_ids']" position="attributes">
                <attribute name="string">Harvest Record</attribute>
            </xpath>

            <xpath expr="//field[@name='activity_record_ids']" position="attributes">
                <attribute name="context">{
                    'form_view_ref': 'equip3_agri_operations.view_harvest_record_form'
                }</attribute>
            </xpath>

            <xpath expr="//field[@name='nursery_ids']//field[@name='activity_record_id']" position="attributes">
                <attribute name="string">Harvest Record</attribute>
            </xpath>

            <xpath expr="//field[@name='harvest_ids']//field[@name='activity_record_harvest_id']" position="attributes">
                <attribute name="string">Harvest Record</attribute>
            </xpath>

            <xpath expr="//field[@name='material_ids']//field[@name='activity_record_material_id']" position="attributes">
                <attribute name="string">Harvest Record</attribute>
            </xpath>

            <xpath expr="//field[@name='asset_ids']//field[@name='activity_record_id']" position="attributes">
                <attribute name="string">Harvest Record</attribute>
            </xpath>

            <xpath expr="//page[@name='activity_record_ids']" position="attributes">
                <attribute name="string">Harvest Record</attribute>
            </xpath>

            <xpath expr="//field[@name='activity_record_ids']/tree" position="attributes">
                <attribute name="string">Harvest Record</attribute>
            </xpath>

            <xpath expr="//field[@name='worker_group_ids']//field[@name='activity_record_id']" position="attributes">
                <attribute name="string">Harvest Record</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_harvest_line_search" model="ir.ui.view">
        <field name="name">view.harvest.line.search</field>
        <field name="model">agriculture.daily.activity.line</field>
        <field name="inherit_id" ref="equip3_agri_operations.view_daily_activity_line_search"/>
        <field name="mode">primary</field>
        <field name="priority" eval="1000"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="attributes">
                <attribute name="string">Harvest Lines</attribute>
            </xpath>

            <xpath expr="//field[@name='block_id']" position="attributes">
                <attribute name="string">Block</attribute>
            </xpath>

            <xpath expr="//filter[@name='groupby_block_id']" position="attributes">
                <attribute name="string">Block</attribute>
            </xpath>

            <xpath expr="//filter[@name='groupby_daily_activity_id']" position="attributes">
                <attribute name="string">Harvest Plan</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_harvest_line_calendar" model="ir.ui.view">
        <field name="name">view.harvest.line.calendar</field>
        <field name="model">agriculture.daily.activity.line</field>
        <field name="inherit_id" ref="equip3_agri_operations.view_daily_activity_line_calendar"/>
        <field name="mode">primary</field>
        <field name="priority" eval="1000"/>
        <field name="arch" type="xml">
            <xpath expr="//calendar" position="attributes">
                <attribute name="string">Harvest Lines</attribute>
            </xpath>

            <xpath expr="//field[@name='block_id']" position="attributes">
                <attribute name="string">Block</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_harvest_line_pivot" model="ir.ui.view">
        <field name="name">view.harvest.line.pivot</field>
        <field name="model">agriculture.daily.activity.line</field>
        <field name="priority" eval="1000"/>
        <field name="arch" type="xml">
            <pivot string="Harvest Lines" sample="1">
                <field name="block_id" string="Block"/>
            </pivot>
        </field>
    </record>

    <record id="action_view_harvest_line" model="ir.actions.act_window">
        <field name="name">Harvest Lines</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">agriculture.daily.activity.line</field>
        <field name="view_mode">tree,form,kanban,pivot,calendar</field>
        <field name="view_ids" eval="[(5,),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('equip3_agri_operations.view_harvest_line_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('equip3_agri_operations.view_harvest_line_form')}),
            (0, 0, {'view_mode': 'pivot', 'view_id': ref('equip3_agri_operations.view_harvest_line_pivot')}),
            (0, 0, {'view_mode': 'calendar', 'view_id': ref('equip3_agri_operations.view_harvest_line_calendar')}),
        ]"/>
        <field name="search_view_id" ref="equip3_agri_operations.view_harvest_line_search"/>
        <field name="context">{'search_default_to_do': 1, 'default_daily_activity_type': 'harvest'}</field>
        <field name="domain">[
            ('daily_activity_type', '=', 'harvest'),
            '|', 
                ('daily_activity_id', '=', False), 
                '&amp;', 
                    ('daily_activity_id', '!=', False), 
                    ('state', 'not in', ('draft', 'to_be_approved', 'approved'))
        ]</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
           Create a new Harvest Lines
          </p>
        </field>
    </record>

</odoo>