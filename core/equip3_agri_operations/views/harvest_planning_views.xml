<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_annual_harvest_planning_tree" model="ir.ui.view">
        <field name="name">view.annual.harvest.planning.tree</field>
        <field name="model">annual.harvest.planning</field>
        <field name="arch" type="xml">
            <tree string="Annual Harvest Planing">
                <field name="name"/>
                <field name="plan_name"/>
                <field name="estate_id"/>
                <field name="year" widget="date_year"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'confirm'"/>
            </tree>
        </field>
    </record>

    <record id="view_annual_harvest_planning_form" model="ir.ui.view">
        <field name="name">view.annual.harvest.planning.form</field>
        <field name="model">annual.harvest.planning</field>
        <field name="arch" type="xml">
            <form string="Annual Harvest Planing">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" nolabel="1"/>
                        </h1>
                    </div>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="action_view_monthly_planning" icon="fa-exchange" type="object" attrs="{'invisible': [('is_monthly_planning', '=', False)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text"> Monthly<br/>Planning</span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="plan_name"/>
                            <field name="estate_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="year" widget="date_year"/>
                            <field name="branch_id" options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                            <field name="create_uid" string="Created By"/>
                            <field name="create_date" string="Created On"/>
                            <field name="monthly_ids" widget="many2many_tags" invisible="1"/>
                            <field name="next_sequence" invisible="1"/>
                            <field name="is_monthly_planning" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Target" name="target_ids">
                            <field name="target_ids" context="{
                                'default_estate_id': estate_id,
                                'default_sequence': next_sequence,
                            }">
                                <tree string="Target" editable="bottom">
                                    <field name="estate_id" invisible="1"/>
                                    <field name="sequence"/>
                                    <field name="division_id" options="{'no_create': True, 'no_create_edit': True}"/>
                                    <field name="block_id" options="{'no_create': True, 'no_create_edit': True}"/>
                                    <field name="quantity" required="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_monthly_harvest_planning_tree" model="ir.ui.view">
        <field name="name">view.monthly.harvest.planning.tree</field>
        <field name="model">monthly.harvest.planning</field>
        <field name="arch" type="xml">
            <tree string="Monthly Harvest Planing" expand="1" create="0" edit="0" delete="0">
                <field name="annual_id"/>
                <field name="name"/>
                <field name="estate_id"/>
                <field name="month" widget="date_month_year"/>
            </tree>
        </field>
    </record>

    <record id="view_monthly_harvest_planning_form" model="ir.ui.view">
        <field name="name">view.monthly.harvest.planning.form</field>
        <field name="model">monthly.harvest.planning</field>
        <field name="arch" type="xml">
            <form string="Monthly Harvest Planing" create="0" edit="0" delete="0">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" nolabel="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="estate_id"/>
                            <field name="year" widget="date_year"/>
                            <field name="month" widget="date_month_year"/>
                            <field name="annual_id"/>
                        </group>
                        <group>
                            <field name="branch_id"/>
                            <field name="company_id"/>
                            <field name="create_uid" string="Created By"/>
                            <field name="create_date" string="Created On"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Monthly Target" name="target_ids">
                            <field name="target_ids">
                                <tree string="Monthly Target">
                                    <field name="monthly_id" invisible="1"/>
                                    <field name="estate_id" invisible="1"/>
                                    <field name="sequence"/>
                                    <field name="division_id"/>
                                    <field name="block_id"/>
                                    <field name="quantity" required="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_monthly_harvest_planning_search" model="ir.ui.view">
        <field name="name">view.monthly.harvest.planning.search</field>
        <field name="model">monthly.harvest.planning</field>
        <field name="arch" type="xml">
            <search string="Monthly Harvest Planing">
                <field name="annual_id"/>

                <group string="Group By...">
                    <filter name="groupby_annual_id" string="Annual Plan" domain="[]" context="{'group_by': 'annual_id'}"/>
                </group>

            </search>
        </field>
    </record>

    <record id="action_view_annual_harvest_planning" model="ir.actions.act_window">
        <field name="name">Annual Harvest Planning</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">annual.harvest.planning</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
           Create a new Annual Harvest Planning
          </p>
        </field>
    </record>

    <record id="action_view_monthly_harvest_planning" model="ir.actions.act_window">
        <field name="name">Monthy Harvest Planning</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">monthly.harvest.planning</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_monthly_harvest_planning_search"/>
        <field name="context">{'search_default_groupby_annual_id': 1}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
           Create a new Monthy Harvest Planning
          </p>
        </field>
    </record>

</odoo>