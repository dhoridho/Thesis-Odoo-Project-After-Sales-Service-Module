<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_daily_activity_record_tree" model="ir.ui.view">
        <field name="name">view.daily.culture.activity.record.tree</field>
        <field name="model">agriculture.daily.activity.record</field>
        <field name="arch" type="xml">
            <tree string="Plantation Record" default_order="priority desc, date_scheduled desc, name desc"  create="false" delete="false" edit="false">
                <field name="priority" widget="priority" nolabel="1"/>
                <field name="activity_line_id"/>
                <field name="name"/>
                <field name="activity_id"/>
                <field name="block_id"/>
                <field name="worker_group_ids" widget="many2many_tags"/>
                <field name="state" widget='badge' decoration-secondary="state == 'draft'"
                                                   decoration-warning3="state == 'to_be_approved'"
                                                   decoration-warning2="state == 'approved'"
                                                   decoration-danger="state == 'rejected'"
                                                   decoration-primary="state == 'confirm'"
                                                   decoration-warning="state == 'progress'"
                                                   decoration-success="state == 'done'"
                                                   decoration-danger3="state == 'cancel'"/>
            </tree>
        </field>
    </record>

    <record id="view_daily_activity_record_form" model="ir.ui.view">
        <field name="name">view.daily.culture.activity.record.form</field>
        <field name="model">agriculture.daily.activity.record</field>
        <field name="arch" type="xml">
            <form string="Plantation Record" create="false" delete="false">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" attrs="{'invisible': [('state', 'not in', ('draft', 'approved'))]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="priority" widget="priority" class="mr-3"/>
                            <field name="name" nolabel="1"/>
                        </h1>
                    </div>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="action_view_moves" type="object" icon="o-hm-smart-all-product-move" attrs="{'invisible': [('moves_count', '=', 0)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="moves_count"/></span>
                                <span class="o_stat_text">Product<br/>Moves</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" name="action_view_crops" type="object" icon="fa-leaf" attrs="{'invisible': [('crops_count', '=', 0)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="crops_count"/></span>
                                <span class="o_stat_text">Crops</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" name="action_view_transfer_moves" type="object" icon="o-hm-smart-all-product-move" attrs="{'invisible': [('transfer_moves_count', '=', 0)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="transfer_moves_count"/></span>
                                <span class="o_stat_text">Transfers</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" name="action_view_planting_moves" type="object" icon="o-hm-smart-all-product-move" attrs="{'invisible': [('planting_moves_count', '=', 0)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="planting_moves_count"/></span>
                                <span class="o_stat_text">Planting<br/>Moves</span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="daily_activity_type" invisible="1"/>
                            <field name="planting_move_ids" invisible="1"/>

                            <field name="activity_id"/>
                            <field name="category_type" invisible="1"/>
                            <field name="activity_type" invisible="1"/>
                            <field name="daily_activity_id" attrs="{'invisible': [('daily_activity_id', '=', False)]}"/>
                            <field name="activity_line_id"/>
                            <field name="date_scheduled"/>
                            <field name="is_whole_day" readonly="1"/>
                            <div class="o_row" attrs="{'invisible': [('is_whole_day', '=', True)]}">
                                <div class="o_td_label oe_inline mr-4">
                                    <label for="start_time"/>
                                    <field name="start_time" widget="datetime_timepicker" class="d-block" readonly="1" options="{'datepicker': {'stepping': 30}}"/>
                                </div>
                                <div class="o_td_label oe_inline">
                                    <label for="end_time"/>
                                    <field name="end_time" widget="datetime_timepicker" class="d-block" readonly="1" options="{'datepicker': {'stepping': 30}}"/>
                                </div>
                            </div>
                            <field name="block_id"/>
                            <field name="allowed_sub_block_ids" widget="many2many_tags" invisible="1"/>
                            <field name="sub_block_id" options="{'no_create_edit': True, 'no_create': True}" attrs="{'invisible': [('allowed_sub_block_ids', '=', [])], 'required': [('allowed_sub_block_ids', '!=', [])]}"/>
                            <label for="size"/>
                            <div class="o_row">
                                <field name="size" class="oe_inline" required="1"/> / <field name="planned_size" class="oe_inline" force_save="1"/>
                                <field name="uom_id" class="oe_inline" force_save="1"/>
                            </div>

                            <field name="agreement_id" options="{'no_create_edit': True, 'no_create': True}" force_save="1"/>
                        </group>
                        <group>
                            <field name="analytic_group_ids" widget="many2many_tags"/>
                            <field name="company_id"/>
                            <field name="branch_id"/>
                            <field name="create_date" string="Created On"/>
                            <field name="create_uid" string="Created By"/>
                            <field name="crop_age"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="crop_location" string="Crop Location" attrs="{'invisible': [('activity_type', '!=', 'transfer')]}">
                            <field name="crop_line_ids"
                                   context="{
                                        'default_block_id': block_id
                                   }">
                                <tree string="Crop Location" editable="bottom">
                                    <field name="block_crop_ids" widget="many2many_tags" invisible="1"/>
                                    <field name="crop_id" domain="[('id', 'in', block_crop_ids)]"/>
                                    <field name="block_id" readonly="1" force_save="1"/>
                                    <field name="dest_block_id" domain="[('id', '!=', block_id)]"/>
                                    <field name="quantity"/>
                                    <field name="uom_id" readonly="1" force_save="1"/>
                                </tree>
                            </field>
                        </page>
                        <page name="nursery_ids" string="Crop" attrs="{'invisible': [('activity_type', 'not in', ('planting', 'crop_adjustment'))]}">
                            <field name="nursery_ids"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"
                                   context="{
                                        'default_daily_activity_id': daily_activity_id,
                                        'default_activity_line_id': activity_line_id,
                                        'default_block_id': block_id,
                                        'default_date': date_scheduled,
                                        'crop_ids': crop_ids
                                    }">
                                <tree string="Crop" editable="bottom">
                                    <field name="activity_line_sequence" invisible="1"/>
                                    <field name="daily_activity_id" invisible="1"/>
                                    <field name="activity_line_id" invisible="1"/>
                                    <field name="activity_record_id" invisible="1"/>
                                    <field name="block_id" invisible="1"/>
                                    <field name="crop_id" domain="[('id', 'in', context.get('crop_ids'))]"/>
                                    <field name="product_id" invisible="1"/>
                                    <field name="lot_id" attrs="{'invisible': [('parent.activity_type', '!=', 'crop_adjustment')]}" readonly="1" force_save="1"/>
                                    <field name="current_qty" attrs="{'invisible': [('parent.activity_type', '!=', 'crop_adjustment')]}" readonly="1" force_save="1"/>
                                    <field name="count"/>
                                    <field name="uom_id"/>
                                    <field name="date"/>
                                </tree>
                            </field>
                        </page>
                        <page name="crop_adjustment" string="Crop Adjustment" attrs="{'invisible': [('activity_type', '!=', 'crop_adjustment')]}">
                            <field name="adjusted_ids" attrs="{'readonly': [('state', '!=', 'draft')]}">
                                <tree string="Adjusted" editable="bottom">
                                    <field name="crop_id" domain="[('id', 'in', parent.crop_ids)]"/>
                                    <field name="current_qty" readonly="1" force_save="1"/>
                                    <field name="counted_qty"/>
                                </tree>
                            </field>
                        </page>
                        <page name="harvest_ids" string="Harvest" attrs="{'invisible': [('harvest', '=', False)]}">
                            <field name="harvest_ids" 
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"
                                   context="{
                                        'default_daily_activity_harvest_id': daily_activity_id,
                                        'default_activity_line_harvest_id': activity_line_id,
                                        'default_location_id': production_location_id,
                                        'default_location_dest_id': location_id,
                                        'default_date': date_scheduled,
                                        'default_date_deadline': date_scheduled,
                                        'default_company_id': company_id,
                                        'default_branch_id': branch_id,
                                        'default_name': name,
                                        'default_origin': name,
                                        'default_warehouse_id': warehouse_id,
                                        'default_block_id': block_id,
                                        'default_sub_block_id': sub_block_id
                                    }">
                                <tree string="Harvest" editable="bottom">
                                    <field name="daily_activity_harvest_id" invisible="1"/>
                                    <field name="activity_line_harvest_id" invisible="1"/>
                                    <field name="activity_record_harvest_id" invisible="1"/>
                                    <field name="activity_harvest_id" invisible="1"/>
                                    <field name="block_id" invisible="1"/>
                                    <field name="sub_block_id" invisible="1"/>
                                    <field name="sequence" invisible="1"/>
                                    <field name="name" invisible="1"/>
                                    <field name="date" invisible="1"/>
                                    <field name="date_deadline" invisible="1"/>
                                    <field name="location_id" invisible="1"/>
                                    <field name="location_dest_id" invisible="1"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="branch_id" invisible="1"/>
                                    <field name="origin" invisible="1"/>
                                    <field name="warehouse_id" invisible="1"/>
                                    <field name="product_id" readonly="1" force_save="1"/>
                                    <field name="product_uom_qty" string="To Produce" readonly="1" force_save="1"/>
                                    <field name="quantity_done" string="Produced"/>
                                    <field name="product_uom"/>
                                    <field name="bunch"/>
                                    <field name="product_uom_category_id" invisible="1"/>
                                    <field name="state" widget="badge" decoration-success="state == 'done'"/>
                                </tree>
                            </field>
                        </page>
                        <page name="material_ids" string="Material">
                            <field name="material_ids" 
                                   attrs="{'readonly': [('state', '!=', 'draft')]}" 
                                   context="{
                                        'default_daily_activity_material_id': daily_activity_id,
                                        'default_activity_line_material_id': activity_line_id,
                                        'default_location_id': location_id,
                                        'default_location_dest_id': production_location_id,
                                        'default_date': date_scheduled,
                                        'default_date_deadline': date_scheduled,
                                        'default_company_id': company_id,
                                        'default_branch_id': branch_id,
                                        'default_name': name,
                                        'default_origin': name,
                                        'default_warehouse_id': warehouse_id,
                                        'default_picking_type_id': picking_type_id
                                   }">
                                <tree string="Material" editable="bottom">
                                    <field name="daily_activity_material_id" invisible="1"/>
                                    <field name="activity_line_material_id" invisible="1"/>
                                    <field name="activity_record_material_id" invisible="1"/>
                                    <field name="activity_material_id" invisible="1"/>
                                    <field name="sequence" invisible="1"/>
                                    <field name="name" invisible="1"/>
                                    <field name="date" invisible="1"/>
                                    <field name="date_deadline" invisible="1"/>
                                    <field name="location_id" invisible="1"/>
                                    <field name="location_dest_id" invisible="1"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="branch_id" invisible="1"/>
                                    <field name="origin" invisible="1"/>
                                    <field name="warehouse_id" invisible="1"/>
                                    <field name="product_id" force_save="1" attrs="{'readonly': [('activity_material_id', '!=', False)]}"/>
                                    <field name="product_uom_qty" string="To Consume" force_save="1" attrs="{'readonly': [('activity_material_id', '!=', False)]}"/>
                                    <field name="quantity_done" string="Consumed"/>
                                    <field name="product_uom"/>
                                    <field name="product_uom_category_id" invisible="1"/>
                                    <field name="state" widget="badge" decoration-success="state == 'done'"/>
                                    <field name="picking_type_id" invisible="1"/>
                                    <button name="action_show_details" type="object" class="oe_highlight" attrs="{'invisible': [('parent.state', '!=', 'draft')]}" string="Details"/>
                                </tree>
                            </field>
                        </page>
                        <page name="crop_ids" string="Crops">
                            <field name="crop_ids" force_save="1">
                                <tree string="Crops">
                                    <field name="crop"/>
                                    <field name="crop_date"/>
                                    <field name="lot_id"/>
                                    <field name="crop_count"/>
                                </tree>
                            </field>
                        </page>
                        <page name="assets_ids" string="Asset">
                            <field name="asset_ids" 
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"
                                   context="{
                                        'default_daily_activity_id': daily_activity_id,
                                        'default_activity_line_id': activity_line_id
                                   }">
                                <tree string="Asset" editable="bottom">
                                    <field name="daily_activity_id" invisible="1"/>
                                    <field name="activity_line_id" invisible="1"/>
                                    <field name="activity_record_id" invisible="1"/>
                                    <field name="activity_asset_id" invisible="1"/>
                                    <field name="asset_id" string="Asset" options="{'no_create': 1, 'no_create_edit': 1}"/>
                                    <field name="user_id" string="Responsible" options="{'no_create': 1, 'no_create_edit': 1}"/>
                                </tree>
                            </field>
                        </page>
                        <page name="worker_group_ids" string="Worker Group">
                            <field name="worker_group_ids" 
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"
                                   context="{
                                        'default_daily_activity_id': daily_activity_id,
                                        'default_activity_line_id': activity_line_id
                                   }">
                                <tree string="Worker Group" editable="bottom">
                                    <field name="daily_activity_id" invisible="1"/>
                                    <field name="activity_line_id" invisible="1"/>
                                    <field name="activity_record_id" invisible="1"/>
                                    <field name="activity_line_id" invisible="1"/>
                                    <field name="group_id" string="Name"/>
                                    <field name="head_id"/>
                                    <field name="worker_ids" widget="many2many_tags"/>
                                </tree>
                            </field>
                        </page>
                        <page name="cost_details" string="Cost Details" attrs="{'invisible': [('stock_valuation_layer_ids', '=', [])]}">
                            <field name="stock_valuation_layer_ids">
                                <tree string="Cost Details">
                                    <field name="product_id"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="value" string="Value"/>
                                </tree>
                            </field>
                        </page>
                        <page name="miscellaneous" string="Miscellaneous" invisible="1">
                            <group>
                                <group>
                                    <field name="estate_id"/>
                                    <field name="division_id"/>
                                    <field name="datetime_scheduled"/>
                                    <field name="location_id"/>
                                    <field name="production_location_id"/>
                                    <field name="warehouse_id"/>
                                    <field name="harvest"/>
                                    <field name="nursery"/>
                                    <field name="picking_type_id"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_daily_activity_record_search" model="ir.ui.view">
        <field name="name">view.daily.activity.record.search</field>
        <field name="model">agriculture.daily.activity.record</field>
        <field name="arch" type="xml">
            <search string="Plantation Record">
                <field name="name"/>
                <field name="block_id"/>
                <field name="activity_line_id"/>
                <field name="activity_id"/>
                <field name="crop_ids"/>
                <field name="material_ids"/>
                <field name="asset_ids"/>
                <field name="state"/>

                <filter name="starred" string="Starred" domain="[('priority', '=', 1)]"/>

                <separator/>
                <filter name="state_draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="state_confirm" string="Confirmed" domain="[('state', '=', 'confirm')]"/>

                <separator/>
                <filter name="filter_date_scheduled" string="Scheduled Date" date="date_scheduled"/>

                <group string="Group By...">
                    <filter name="groupby_activity_line_id" string="Plantation Lines" domain="[]" context="{'group_by': 'activity_line_id'}"/>
                    <filter name="groupby_activity_id" string="Activity" domain="[]" context="{'group_by': 'activity_id'}"/>
                    <filter name="groupby_date_scheduled" string="Scheduled Date" domain="[]" context="{'group_by': 'date_scheduled'}"/>
                    <filter name="groupby_state" string="Status" domain="[]" context="{'group_by': 'state'}"/>
                </group>

                <searchpanel view_types="tree,kanban,pivot,graph">
                    <field name="activity_id"/>
                    <!-- <field name="crop_ids"/> -->
                    <field name="state"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="action_view_daily_activity_record" model="ir.actions.act_window">
        <field name="name">Plantation Record</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">agriculture.daily.activity.record</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('daily_activity_type', '=', 'plantation')]</field>
        <field name="context">{'default_daily_activity_type': 'plantation'}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
           Create a new Plantation Record
          </p>
        </field>
    </record>

</odoo>
