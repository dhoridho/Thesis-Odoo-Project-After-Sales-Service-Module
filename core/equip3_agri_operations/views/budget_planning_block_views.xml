<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_budget_planning_block_tree" model="ir.ui.view">
        <field name="name">view.budget.planning.block.tree</field>
        <field name="model">agriculture.budget.planning.block</field>
        <field name="arch" type="xml">
            <tree string="Budget Planning">
                <field name="priority" widget="priority" nolabel="1"/>
                <field name="year"/>
                <field name="estate_id"/>
                <field name="division_id"/>
                <field name="user_id"/>
            </tree>
        </field>
    </record>

    <record id="view_budget_planning_block_from" model="ir.ui.view">
        <field name="name">view.budget.planning.block.form</field>
        <field name="model">agriculture.budget.planning.block</field>
        <field name="arch" type="xml">
            <form string="Budget Planning">
                <sheet>
                    <group>
                        <group>
                            <field name="estate_id" options="{'no_create_edit': True, 'no_create': True}"/>
                            <field name="division_id" options="{'no_create_edit': True, 'no_create': True}"/>
                            <field name="year"/>
                            <field name="user_id" options="{'no_create_edit': True, 'no_create': True}"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                            <field name="is_branch_required" invisible="1"/>
                            <field name="branch_id" options="{'no_create_edit': True, 'no_create': True}" attrs="{'required': [('is_branch_required', '=', True)]}"/>
                            <field name="create_date" string="Created On"/>
                            <field name="create_uid" string="Created By" readonly="1" force_save="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Months" name="month_ids">
                            <field name="month_ids">
                                <tree string="Months" editable="bottom">
                                    <field name="plan_id" invisible="1"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="division_id" invisible="1"/>
                                    <field name="block_id" required="1" string="Block" options="{'no_create_edit': True, 'no_create': True}"/>
                                    <field name="tt"/>
                                    <field name="ha" sum="HA"/>
                                    <field name="pkk" sum="PKK"/>
                                    <field name="sph" sum="SPH"/>
                                    <field name="year" invisible="1"/>
                                    <field name="val_jan" sum="January"/>
                                    <field name="val_feb" sum="February"/>
                                    <field name="val_mar" sum="March"/>
                                    <field name="val_apr" sum="April"/>
                                    <field name="val_may" sum="May"/>
                                    <field name="val_jun" sum="June"/>
                                    <field name="val_jul" sum="July"/>
                                    <field name="val_aug" sum="August"/>
                                    <field name="val_sep" sum="September"/>
                                    <field name="val_oct" sum="October"/>
                                    <field name="val_nov" sum="November"/>
                                    <field name="val_dec" sum="December"/>
                                    <field name="total" sum="Total"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_budget_planning_block_search" model="ir.ui.view">
        <field name="name">view.budget.planning.block.search</field>
        <field name="model">agriculture.budget.planning.block</field>
        <field name="arch" type="xml">
            <search string="Budget Planning">
                <field name="estate_id"/>
                <field name="division_id"/>
                <field name="year"/>
                <field name="user_id"/>

                <filter name="starred" string="Starred" domain="[('priority', '=', 1)]"/>

                <group string="Group By...">
                    <filter name="groupby_estate_id" string="Estate" domain="[]" context="{'group_by': 'estate_id'}"/>
                    <filter name="groupby_division_id" string="Division" domain="[]" context="{'group_by': 'division_id'}"/>
                    <filter name="groupby_year" string="Year" domain="[]" context="{'group_by': 'year'}"/>
                    <filter name="groupby_user_id" string="Responsible" domain="[]" context="{'group_by': 'user_id'}"/>
                </group>

                <searchpanel view_types="tree,kanban,pivot,graph">
                    <field name="year"/>
                    <field name="estate_id"/>
                    <field name="user_id"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="action_view_budget_planning_block" model="ir.actions.act_window">
        <field name="name">Budget Planning</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">agriculture.budget.planning.block</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
           Create a new Budget Planning
          </p>
        </field>
    </record>
</odoo>