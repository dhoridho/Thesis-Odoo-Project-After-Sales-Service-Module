<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_nursery_record_tree" model="ir.ui.view">
        <field name="name">view.nursery.line.tree</field>
        <field name="model">agriculture.daily.activity.record</field>
        <field name="inherit_id" ref="equip3_agri_operations.view_daily_activity_record_tree"/>
        <field name="mode">primary</field>
        <field name="priority" eval="1000"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="string">Nursery Record</attribute>
            </xpath>

            <xpath expr="//field[@name='block_id']" position="attributes">
                <attribute name="string">Nursery Area</attribute>
            </xpath>

            <xpath expr="//field[@name='activity_line_id']" position="attributes">
                <attribute name="string">Nursery Lines</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_nursery_record_form" model="ir.ui.view">
        <field name="name">view.nursery.line.form</field>
        <field name="model">agriculture.daily.activity.record</field>
        <field name="inherit_id" ref="equip3_agri_operations.view_daily_activity_record_form"/>
        <field name="mode">primary</field>
        <field name="priority" eval="1000"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="attributes">
                <attribute name="string">Nursery Record</attribute>
            </xpath>

            <xpath expr="//form" position="inside">
                <field name="transfer_move_ids" invisible="1"/>
            </xpath>

            <xpath expr="//field[@name='block_id']" position="attributes">
                <attribute name="string">Nursery Area</attribute>
            </xpath>

            <xpath expr="//field[@name='sub_block_id']" position="attributes">
                <attribute name="invisible">1</attribute>
                <attribute name="required">0</attribute>
            </xpath>

            <xpath expr="//page[@name='nursery_ids']" position="attributes">
                <attribute name="string">Planting</attribute>
                <attribute name="attrs">{'invisible': [('activity_type', '!=', 'planting')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='nursery_ids']//field[@name='crop_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='nursery_ids']//field[@name='product_id']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
            <xpath expr="//field[@name='nursery_ids']//field[@name='lot_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='nursery_ids']//field[@name='current_qty']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_nursery_record_search" model="ir.ui.view">
        <field name="name">view.nursery.line.search</field>
        <field name="model">agriculture.daily.activity.record</field>
        <field name="inherit_id" ref="equip3_agri_operations.view_daily_activity_record_search"/>
        <field name="mode">primary</field>
        <field name="priority" eval="1000"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="attributes">
                <attribute name="string">Nursery Record</attribute>
            </xpath>

            <xpath expr="//field[@name='block_id']" position="attributes">
                <attribute name="string">Nursery Area</attribute>
            </xpath>

            <xpath expr="//filter[@name='groupby_activity_line_id']" position="attributes">
                <attribute name="string">Nursery Lines</attribute>
            </xpath>
        </field>
    </record>

    <record id="action_view_nursery_record" model="ir.actions.act_window">
        <field name="name">Nursery Record</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">agriculture.daily.activity.record</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5,),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('equip3_agri_operations.view_nursery_record_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('equip3_agri_operations.view_nursery_record_form')})
        ]"/>
        <field name="search_view_id" ref="equip3_agri_operations.view_nursery_record_search"/>
        <field name="domain">[('daily_activity_type', '=', 'nursery')]</field>
        <field name="context">{'default_daily_activity_type': 'nursery'}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
           Create a new Nursery Record
          </p>
        </field>
    </record>

</odoo>