<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_agriculture_budget_analysis_report" model="ir.actions.client">
        <field name="name">Budget Analysis Report</field>
        <field name="tag">agriculture_budget_analysis_report</field>
    </record>

    <template id="budget_analysis_report_document">
        <t t-call="web.internal_layout">
            <div class="page">

                <div class="oe_structure"/>

                <h3><span t-esc="doc.company_id.name"/>: Budget Analysis Report</h3>
                <br></br>

                <table class="table o_table_agri_report">
                    <thead>
                        <tr>
                            <th rowspan="2" class="o_title">Division</th>
                            <th rowspan="2" class="o_title">Area</th>
                            <t t-foreach="months" t-as="month">
                                <th colspan="2" class="o_month"><t t-esc="month"/></th>
                            </t>
                            <th colspan="2" class="o_month">Total</th>
                        </tr>
                        <tr>
                            <t t-foreach="months" t-as="m">
                                <th class="o_value">Planned</th>
                                <th class="o_value">Actual</th>
                            </t>
                            <th class="o_value">Planned</th>
                            <th class="o_value">Actual</th>
                        </tr>
                    </thead>
    
                    <t t-foreach="data['children']" t-as="division">
                        <tbody class="o_row">
                            <tr>
                                <td>
                                    <span class="fa fa-caret-down" role="img" aria-label="Unfolded" title="Unfolded"></span>
                                    <t t-esc="division['name']"/>
                                </td>
                                <td><t t-esc="division['area']"/></td>

                                <t t-set="total_division_planned" t-value="0.0"/>
                                <t t-set="total_division_actual" t-value="0.0"/>
                                <t t-foreach="division['months']" t-as="division_month">
                                    <td class="o_value"><t t-esc="'{0:,.2f}'.format(division_month_value['planned'])"/></td>
                                    <td class="o_value"><t t-esc="'{0:,.2f}'.format(division_month_value['actual'])"/></td>
                                </t>
                                <td class="o_value o_total"><t t-esc="'{0:,.2f}'.format(total_division_planned)"/></td>
                                <td class="o_value o_total"><t t-esc="'{0:,.2f}'.format(total_division_actual)"/></td>
                            </tr>
                        </tbody>
                        <tbody>
                            <t t-foreach="division['children']" t-as="activity">
                                <tr>
                                    <td class="o_activity" colspan="2"><t t-esc="activity['name']"/></td>
                                    <t t-set="total_activity_planned" t-value="0.0"/>
                                    <t t-set="total_activity_actual" t-value="0.0"/>
                                    <t t-foreach="activity['months']" t-as="activity_month">
                                        <td class="o_value"><t t-esc="'{0:,.2f}'.format(activity_month_value['planned'])"/></td>
                                        <td class="o_value"><t t-esc="'{0:,.2f}'.format(activity_month_value['actual'])"/></td>
                                        <t t-set="total_activity_planned" t-value="total_activity_planned + activity_month_value['planned']"/>
                                        <t t-set="total_activity_actual" t-value="total_activity_actual + activity_month_value['actual']"/>
                                    </t>
                                    <td class="o_value o_total"><t t-esc="'{0:,.2f}'.format(total_activity_planned)"/></td>
                                    <td class="o_value o_total"><t t-esc="'{0:,.2f}'.format(total_activity_actual)"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </t>
                </table>
            </div>

            <div class="oe_structure"/>
        </t>
    </template>

    <template id="budget_analysis_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-set="filters" t-value="doc.get_filters()"/>
                <t t-set="values" t-value="doc.get_budget_values()"/>
                <t t-set="data" t-value="values['data']"/>
                <t t-set="months" t-value="values['months']"/>
                <t t-call="equip3_agri_operations.budget_analysis_report_document"/>
            </t>
        </t>
    </template>

    <record id="paperformat_agriculture_budget_analysis_report" model="report.paperformat">
        <field name="name">Budget Analysis Report Paper</field>
        <field name="format">A4</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">20</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">10</field>
        <field name="dpi">110</field>
    </record>

    <record id="action_print_agriculture_budget_analysis_report" model="ir.actions.report">
        <field name="name">Budget Analysis Report</field>
        <field name="model">agriculture.budget.analysis.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">equip3_agri_operations.budget_analysis_report</field>
        <field name="report_file">equip3_agri_operations.budget_analysis_report</field>
        <field name="print_report_name">'Budget Analysis Report'</field>
        <field name="binding_model_id" ref="model_agriculture_budget_analysis_report"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="equip3_agri_operations.paperformat_agriculture_budget_analysis_report"/>
    </record>
</odoo>