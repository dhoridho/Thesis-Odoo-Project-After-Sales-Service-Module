<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_agri_serializer_form" model="ir.ui.view">
        <field name="name">view.agri.serializer.form</field>
        <field name="model">agri.serializer</field>
        <field name="arch" type="xml">
            <form string="Serializer">
                <sheet>
                    <group invisible="1">
                        <field name="next_no"/>
                        <field name="activity_record_id"/>
                        <field name="next_nursery_id"/>
                        <field name="next_quantites"/>
                        <field name="next_lot_sequence"/>
                    </group>
                    <notebook>
                        <page name="crops" string="Crops">
                            <field name="line_ids" context="{
                                'default_no': next_no,
                                'default_nursery_id': next_nursery_id
                            }">
                                <tree editable="bottom" string="Crops">
                                    <field name="nursery_id" optional="hide"/>
                                    <field name="no" readonly="1" force_save="1"/>
                                    <field name="lot_name" attrs="{'readonly': [('is_autogenerate', '=', True)]}" force_save="1"/>
                                    <field name="product_id" readonly="1" force_save="1"/>
                                    <field name="product_uom_qty" attrs="{'readonly': [('product_tracking', '=', 'serial')]}" force_save="1"/>
                                    <field name="uom_id" readonly="1" force_save="1"/>
                                    <field name="product_tracking" optional="hide"/>
                                    <field name="is_autogenerate" optional="hide"/>
                                    <field name="lot_sequence" optional="hide"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>