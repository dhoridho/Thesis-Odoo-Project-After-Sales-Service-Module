<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_agri_transfer_serializer_form" model="ir.ui.view">
        <field name="name">view.agri.transfer.serializer.form</field>
        <field name="model">agri.transfer.serializer</field>
        <field name="arch" type="xml">
            <form string="Serializer">
                <sheet>
                    <group invisible="1">
                        <field name="next_no"/>
                        <field name="activity_record_id"/>
                        <field name="next_crop_line_id"/>
                        <field name="next_quantites"/>
                    </group>
                    <notebook>
                        <page name="crops" string="Crops">
                            <field name="line_ids" context="{
                                'default_no': next_no,
                                'default_crop_line_id': next_crop_line_id
                            }">
                                <tree editable="bottom" string="Crops">
                                    <field name="crop_line_id" optional="hide"/>
                                    <field name="no" readonly="1" force_save="1"/>
                                    <field name="lot_id" domain="[('id', '=', crop_lot_id)]"/>
                                    <field name="product_id" readonly="1" force_save="1"/>
                                    <field name="product_uom_qty"/>
                                    <field name="uom_id" readonly="1" force_save="1"/>
                                    <field name="crop_lot_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>