<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_agri_move_serializer_form" model="ir.ui.view">
        <field name="name">view.agri.move.serializer</field>
        <field name="model">agri.move.serializer</field>
        <field name="arch" type="xml">
            <form string="Lot/Serial Number">
                <sheet>
                    <group>
                        <group>
                            <field name="move_id" invisible="1"/>
                            <field name="product_id" invisible="1"/>
                            <field name="product_tracking" invisible="1"/>
                            <field name="default_quantity" invisible="1"/>
                            <field name="next_sequence" invisible="1"/>
                            <field name="to_serialize_qty" readonly="1" force_save="1"/>

                            <label for="per_lot_qty" attrs="{'invisible': [('product_tracking', '!=', 'lot')]}"/>
                            <div class="o_row" attrs="{'invisible': [('product_tracking', '!=', 'lot')]}">
                                <field name="per_lot_qty"/>
                                <button name="action_assign" type="object" string="Assign" class="oe_highlight" context="{'pop_back': True}"/>
                            </div>

                            <button name="action_assign" type="object" string="Assign" class="oe_highlight" attrs="{'invisible': [('product_tracking', '!=', 'serial')]}" context="{'pop_back': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="lines" string="Lot/Serial Number">
                            <field name="line_ids" context="{
                                'default_sequence': next_sequence,
                                'default_product_id': product_id,
                                'default_quantity': default_quantity
                            }">
                                <tree string="Lot/Serial Number" editable="bottom">
                                    <field name="sequence" force_save="1"/>
                                    <field name="product_id" force_save="1"/>
                                    <field name="lot_name"/>
                                    <field name="quantity" attrs="{'readonly': [('parent.product_tracking', '=', 'serial')]}" force_save="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                    <footer>
                        <button name="action_confirm" type="object" string="Confirm" class="oe_highlight"/>
                        <button special="cancel" string="Discard"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

</odoo>