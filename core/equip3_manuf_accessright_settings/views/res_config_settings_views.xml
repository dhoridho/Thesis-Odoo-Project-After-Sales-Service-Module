<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_implementor" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.implementor</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="equip3_general_setting.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='implementor_manufacturing']" position="after">
                <div class="col-6 o_setting_box" id="implementor_mrp_left" attrs="{'invisible': [('manufacturing', '=', False)]}">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane" style="padding-bottom: 15px;">
                        <div class="content-group">
                            <div class="col-12 o_setting_box" style="margin-top: 0; padding-left: 0;">
                                <div class="o_setting_left_pane">
                                    <field name="is_manufacturing_plan"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="is_manufacturing_plan" string="Production Plan"/>
                                    <div class="text-muted">
                                        Production Plan
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-6 o_setting_box" id="implementor_mrp_right" attrs="{'invisible': [('manufacturing', '=', False)]}">
                    <div class="oe_inline" attrs="{'invisible': [('is_manufacturing_plan', '=', False)]}">
                        <div class="o_setting_left_pane">
                            <field name="manufacturing_plan_conf"/>
                        </div>
                        <div class="o_setting_right_pane" style="padding-bottom: 15px;">
                            <label for="manufacturing_plan_conf" string="Production Plan Approval Matrix"/>
                            <div class="text-muted">
                                Activate Approval Matrix for Production Plan
                            </div>
                        </div>
                    </div>
                    <div class="oe_inline">
                        <div class="o_setting_left_pane">
                            <field name="manufacturing_order_conf"/>
                        </div>
                        <div class="o_setting_right_pane" style="padding-bottom: 15px;">
                            <label for="manufacturing_order_conf" string="Production Order Approval Matrix"/>
                            <div class="text-muted">
                                Activate Approval Matrix for Production Order
                            </div>
                        </div>
                    </div>
                    <div class="oe_inline">
                        <div class="o_setting_left_pane">
                            <field name="production_record_conf"/>
                        </div>
                        <div class="o_setting_right_pane" style="padding-bottom: 15px;">
                            <label for="production_record_conf" string="Production Record Approval Matrix"/>
                            <div class="text-muted">
                                Activate Approval Matrix for Production Record
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mrp.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='mrp']" position="attributes">
                <attribute name="attrs">{'invisible': [('manufacturing', '=', False)]}</attribute>
                <attribute name="string">Production</attribute>
            </xpath>

            <!-- revert subcon settings to be visible.
            set invisible to false, deleting xpath require upgrade mrp module -->
            <xpath expr="//field[@name='module_mrp_subcontracting']/ancestor::div[hasclass('o_setting_box')]" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
            
            <xpath expr="//div[@data-key='mrp']" position="inside" >
                <h2 groups="equip3_manuf_accessright_settings.group_manufacturing_plan">Production Plan</h2>
                <div class="row mt16 o_settings_container" name="mrp_plan_container" groups="equip3_manuf_accessright_settings.group_manufacturing_plan">
                    <div class="col-lg-6 col-12 o_setting_box" name="mrp_auto_reserve_pp_container" title="Auto Reserve Materials on Production Plan.">
                        <div class="o_setting_left_pane">
                            <field name="mp_auto_reserve_availability_materials"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="mp_auto_reserve_availability_materials" string="Auto Reserve Materials"/>
                            <div class="text-muted">
                            Will do auto running to check availability
                            </div>
                            <div class="content-group" id="content_mp_auto_reserve_availability_materials"/>
                        </div>
                    </div>
                    <div class="col-lg-6 col-12 o_setting_box" name="mrp_force_done_pp_container" title="Allow Force Done on Production Plan.">
                        <div class="o_setting_left_pane">
                            <field name="mo_force_done"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="mo_force_done" string="Allow Force Done"/>
                            <div class="text-muted">
                                Will show mark as done button even though not all the production has been done.
                            </div>
                            <div class="content-group" id="content_mo_force_done"/>
                        </div>
                    </div>
                    <div class="col-lg-6 col-12 o_setting_box" name="mrp_approval_matrix_pp_container" title="Use Approval Matrix on Production Plan" attrs="{'invisible': [('manufacturing_plan_conf', '=', False)]}">
                        <div class="o_setting_left_pane">
                            <field name="send_wa_approval_notification_mp" class="oe_inline"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <label for="send_wa_approval_notification_mp" string="Production Plan WhatsApp Notification"/>
                                <div class="text-muted">
                                    Will send whatsapp notifications when there is a request for approval
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-12 o_setting_box" name="mrp_reserve_partial_pp_container" title="Allow User to Reserve Materials Partially on Production Plan.">
                        <div class="o_setting_left_pane">
                            <field name="mrp_plan_partial_availability"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="mrp_plan_partial_availability" string="Check Partial Availability"/>
                            <div class="text-muted">
                                Allow User to Reserve Materials Partially on Production Plan
                            </div>
                            <div class="content-group" id="content_mrp_plan_partial_availability"/>
                        </div>
                    </div>
                </div>
                
                <h2>Production Order</h2>
                <div class="row mt16 o_settings_container" name="mrp_production_container">
                    <div class="col-lg-6 col-12 o_setting_box" name="mrp_auto_reserve_po_container" title="Auto Reserve Materials on Production Plan.">
                        <div class="o_setting_left_pane">
                            <field name="mo_auto_reserve_availability_materials"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="mo_auto_reserve_availability_materials" string="Auto Reserve Materials"/>
                            <div class="text-muted">
                            Will do auto running to check availability
                            </div>
                            <div class="content-group" id="content_mo_auto_reserve_availability_materials"/>
                        </div>
                    </div>
                    <div class="col-lg-6 col-12 o_setting_box" name="mrp_force_done_po_container" title="Allow Force Done on Production Orders.">
                        <div class="o_setting_left_pane">
                            <field name="mrp_force_done"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="mrp_force_done" string="Allow Force Done"/>
                            <div class="text-muted">
                                Will show mark as done button even though not all the production has been done.
                            </div>
                            <div class="content-group" id="content_mrp_force_done"/>
                        </div>
                    </div>
                    <div class="col-lg-6 col-12 o_setting_box" name="mrp_approval_matrix_po_container" title="Use Approval Matrix on Production Order" attrs="{'invisible': [('manufacturing_order_conf', '=', False)]}">
                        <div class="o_setting_left_pane">
                            <field name="send_wa_approval_notification_mrp" class="oe_inline"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <label for="send_wa_approval_notification_mrp" string="Production Order WhatsApp Notification"/>
                                <div class="text-muted">
                                    Will send whatsapp notifications when there is a request for approval
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-12 o_setting_box" name="mrp_reserve_partial_po_container" title="Allow User to Reserve Materials Partially on Production Orders.">
                        <div class="o_setting_left_pane">
                            <field name="mrp_production_partial_availability"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="mrp_production_partial_availability" string="Check Partial Availability"/>
                            <div class="text-muted">
                                Allow User to Reserve Materials Partially on Production Orders
                            </div>
                            <div class="content-group" id="content_mrp_order_partial_availability"/>
                        </div>
                    </div>
                </div>

                <h2>Production Record</h2>
                <div class="row mt16 o_settings_container" name="mrp_consumption_container">
                    <div class="col-lg-6 col-12 o_setting_box" name="mrp_approval_matrix_pr_container" title="Use Approval Matrix on Production Record" attrs="{'invisible': [('production_record_conf', '=', False)]}">
                        <div class="o_setting_left_pane">
                            <field name="send_wa_approval_notification_mpr" class="oe_inline"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <label for="send_wa_approval_notification_mpr" string="Production record WhatsApp Notification"/>
                                <div class="text-muted">
                                    Will send whatsapp notifications when there is a request for approval
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>

            <xpath expr="//div[@id='security_lead_time']" position="after">
                <div class="col-lg-6 col-12 o_setting_box" name="mrp_production_schedule_container" title="Use Master Production Schedule" >
                    <div class="o_setting_left_pane">
                        <field name="manufacturing_mps"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label string="Master Production Schedule" for="manufacturing_mps"/>
                        <div class="text-muted">
                            Plan Production or purchase orders based on forecast
                        </div>
                        <div class="content-group" attrs="{'invisible': [('manufacturing_mps','=',False)]}">
                            <div class="mt16">
                                <label for="manufacturing_period" string="Time Range"/>
                                <field name="manufacturing_period" class="oe_inline" widget="radio"/>
                            </div>
                            <!-- <div class="mt16">
                                <label for="manufacturing_period_to_display" string="Number of Columns"/>
                                <field name="manufacturing_period_to_display" class="oe_inline"/>
                            </div> -->
                        </div>
                    </div>
                </div>
            </xpath>

            <xpath expr="//div[@id='quality_control']" position="replace"/>
            <xpath expr="//div[@id='mrp_mps']" position="replace"/>
            
        </field>
    </record>
</odoo>