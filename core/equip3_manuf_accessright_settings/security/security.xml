<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="group_manufacturing_plan" model="res.groups">
            <field name="name">Production Plan</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <record model="ir.module.category" id="module_category_manufacturing_equip3">
            <field name="name">Production</field>
            <field name="sequence">100</field>
        </record>

        <record id="group_mrp_accountant" model="res.groups">
            <field name="name">Is a Production Accountant</field>
            <field name="category_id" ref="equip3_manuf_accessright_settings.module_category_manufacturing_equip3"/>
        </record>

        <record id="group_mrp_allow_change_components" model="res.groups">
            <field name="name">Allow to change material</field>
            <field name="category_id" ref="equip3_manuf_accessright_settings.module_category_manufacturing_equip3"/>
        </record>

        <record id="mrp.group_mrp_user" model="res.groups">
            <field name="name">Labor</field>
        </record>

        <record id="group_mrp_supervisor" model="res.groups">
            <field name="name">PPIC/Supervisor</field>
            <field name="category_id" ref="base.module_category_manufacturing_manufacturing"/>
            <field name="implied_ids" eval="[(4, ref('mrp.group_mrp_user'))]"/>
        </record>

        <record id="mrp.group_mrp_manager" model="res.groups">
            <field name="implied_ids" eval="[(6, 0, [ref('group_mrp_supervisor')])]"/>
        </record>

        <!-- unsued groups, may delete someday -->
        <record id="group_show_material_request" model="res.groups">
            <field name="name">Show Material Request</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <record id="group_show_purchase_request" model="res.groups">
            <field name="name">Show Submit Purchase Request</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

    </data>
    <data>
        <record id="mrp.menu_view_resource_search_mrp" model="ir.ui.menu">
            <field name="groups_id" eval="[(4, ref('group_mrp_accountant')),(4, ref('mrp.group_mrp_user')),(4, ref('group_mrp_supervisor'))]"/>
        </record>

        <record id="mrp.menu_mrp_routing_action" model="ir.ui.menu">
            <field name="groups_id" eval="[(4, ref('group_mrp_accountant')),(4, ref('mrp.group_mrp_user')),(4, ref('group_mrp_supervisor'))]"/>
        </record>

        <record id="mrp.menu_mrp_configuration" model="ir.ui.menu">
            <field name="groups_id" eval="[(4, ref('group_mrp_accountant')),(4, ref('mrp.group_mrp_user')),(4, ref('group_mrp_supervisor'))]"/>
        </record>

        <record id="group_mrp_notification" model="res.groups">
            <field name="name">Show Notification Menu</field>
        </record>
    </data>
</odoo>