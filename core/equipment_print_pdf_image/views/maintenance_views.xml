<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
       <record id="hr_equipment_view_form_inherit_custom_image" model="ir.ui.view">
            <field name="name">equipment.form.inherit.custom.image</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
            <field name="arch" type="xml">
               <xpath expr="//div[@class='oe_title']" position="before">
                    <field name="equipmt_image1_custom" widget='image' class="oe_avatar"/>
               </xpath>
              <xpath expr="//notebook" position="inside">
                  <page name="Images" string="Images">
                    <group>
                      <group>
                           <field name="equipmt_image2_custom" widget='image' class="oe_avatar"/>
                           <field name="equipmt_image3_custom" widget='image' class="oe_avatar"/>
                      </group>
                      <group>
                           <field name="equipmt_image4_custom" widget='image' class="oe_avatar"/>
                           <field name="equipmt_image5_custom" widget='image' class="oe_avatar"/>
                           <field name="equipmt_image6_custom" widget='image' class="oe_avatar"/>
                      </group>
                    </group>
                  </page>
               </xpath>
            </field>
        </record>

    </data>
</odoo>

