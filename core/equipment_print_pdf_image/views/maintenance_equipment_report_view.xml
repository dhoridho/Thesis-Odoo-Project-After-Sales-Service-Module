    <record id="maintenance_equipment_report_custom" model="ir.actions.report">
        <field name="name">Equipment</field>
        <field name="model">maintenance.equipment</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">equipment_print_pdf_image.maint_equipment_temp_custom_view</field>
        <field name="report_file">equipment_print_pdf_image.maint_equipment_temp_custom_view</field>
        <field name="binding_model_id" ref="maintenance.model_maintenance_equipment"/>
        <field name="binding_type">report</field>
    </record>
        
        <template id="maint_equipment_temp_custom_view">
            <t t-call="web.html_container">            
            <t t-foreach="docs" t-as="doc">        
            <t t-call="web.internal_layout">      
            <div class="page">
                <p><h2 align="center">Equipment Information</h2></p>
                <div>
                    <div class="col-xs-12">
                        <p><h3 class="text-center"><span t-field="doc.name"/></h3></p>
                    </div>
                    <div class="text-center">
                        <img t-if="doc.equipmt_image1_custom" t-att-src="image_data_uri(doc.equipmt_image1_custom)" alt="Logo" style="height:250px;"/>
                    </div>
                </div>
                <table class="table table-sm">
                    <tr>
                        <td><strong>Equipment Category</strong></td>
                        <td><span t-field="doc.category_id.name"/></td>
                        <td><strong>Maintenance Team</strong></td>
                        <td><span t-field="doc.maintenance_team_id.name"/></td>
                    </tr>
                    <tr>
                        <td><strong>Company</strong></td>
                        <td><span t-field="doc.company_id.name"/></td>
                        <td><strong>Technician  </strong></td>
                        <td><span t-field="doc.technician_user_id.name"/></td>
                    </tr>
                    <tr>
                        <td><strong>Used By</strong></td>
                        <td><span t-field="doc.equipment_assign_to"/></td>
                        <td><strong>Assigned Date</strong></td>
                        <td><span t-field="doc.assign_date"/></td>
                    </tr>
                    <tr>
                        <td><strong>Employee</strong></td>
                        <td>
                            <span t-field="doc.employee_id.name"/>
                        </td>
                        <td><strong>Department</strong></td>
                        <td>
                            <span t-field="doc.department_id.name"/>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Scrap Date</strong></td>
                        <td><span t-field="doc.scrap_date"/></td>
                        <td><strong>Used in location</strong></td>
                        <td><span t-field="doc.location"/></td>
                    </tr>
                </table>
                <p><h2>Description</h2></p>
                <p>
                    <span t-field="doc.note"/>
                </p>
               
                <p><h2>Product Information</h2></p>
                <table class="table .table-striped">
                    <tr>
                        <td><strong>Vendor</strong></td>
                        <td><span t-field="doc.partner_id.name"/></td>
                        <td><strong>Effective Date</strong></td>
                        <td><span t-field="doc.effective_date"/></td>
                    </tr>
                    <tr>
                        <td><strong>Vendor Reference</strong></td>
                        <td><span t-field="doc.partner_ref"/></td>
                        <td><strong>Cost</strong></td>
                        <td><span t-field="doc.cost"/></td>
                    </tr>
                    <tr>
                        <td><strong>Model</strong></td>
                        <td><span t-field="doc.model"/></td>
                        <td><strong>Warranty Expiration Date</strong></td>
                        <td><span t-field="doc.warranty_date"/></td>
                    </tr>
                    <tr>
                        <td><strong>Serial Number</strong></td>
                        <td>
                            <span t-field="doc.serial_no"/>
                        </td>
                        <td></td>
                        <td></td>
                    </tr>
                </table>
                <p style="page-break-before:always;"> </p>
                <p><h2>Maintenance</h2></p>
                <table class="table .table-striped">
                    <tr>
                        <td><strong>Next Preventive Maintenance</strong></td>
                        <td><span t-field="doc.next_action_date"/></td>
                        <td><strong>Preventive Maintenance Frequency</strong></td>
                        <td><span t-field="doc.period"/> days</td>
                    </tr>
                    <tr>
                        <td><strong>Maintenance Duration</strong></td>
                        <td><span t-field="doc.maintenance_duration"/> hours</td>
                        <td></td>
                        <td></td>
                    </tr>
                </table>
                <p><h2>Images</h2></p>
                <table class="table .table-striped">
                    <tr>
                        <td><strong>Image 2</strong></td>
                        <td><img t-if="doc.equipmt_image2_custom" t-att-src="image_data_uri(doc.equipmt_image2_custom)" alt="Logo" style="height:200px;"/></td>
                        <td><strong>Image 3</strong></td>
                        <td><img t-if="doc.equipmt_image3_custom" t-att-src="image_data_uri(doc.equipmt_image3_custom)" alt="Logo" style="height:200px;"/></td>
                    </tr>
                    <tr>
                        <td><strong>Image 4</strong></td>
                        <td><img t-if="doc.equipmt_image4_custom" t-att-src="image_data_uri(doc.equipmt_image4_custom)" alt="Logo" style="height:200px;"/></td>
                        <td><strong>Image 5</strong></td>
                        <td><img t-if="doc.equipmt_image5_custom" t-att-src="image_data_uri(doc.equipmt_image5_custom)" alt="Logo" style="height:200px;"/></td>
                    </tr>
                    <tr>
                        <td><strong>Image 6</strong></td>
                        <td><img t-if="doc.equipmt_image6_custom" t-att-src="image_data_uri(doc.equipmt_image6_custom)" alt="Logo" style="height:200px;"/></td>
                        <td></td>
                        <td></td>
                    </tr>
                </table>
            </div>
            </t>
            </t>
            </t>
        </template>

        </data>
</odoo>
