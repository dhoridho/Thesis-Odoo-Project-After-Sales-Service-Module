<?xml version="1.0" encoding="utf-8"?>

<templates id="backend_views" xml:space="preserve">

    <t t-inherit="web.ActionMenus" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('o_cp_action_menus')]" position="inside">
           <DropdownMenu t-if="attachment_item.length"
                title="env._t(name_attachment)"
                items="attachment_item"
                icon="'fa fa-paperclip'"
                t-on-remove-item.stop="_onAttachmentRemoved"
                closeOnSelected="true"
            />
            <div id="form_div_upload_attachment" class="d-none">
                <input type='file' id="input_file_attachment_top"/>
            </div>
        </xpath>
    </t>

    <t t-inherit="web.DropdownMenuItem" t-inherit-mode="extension" owl="1">
        <xpath expr="//a[@t-else='']/t" position="before">
            <span class="fa fa-paperclip" style="margin-right: 8px;" t-if="props.description=='Add Attachment'"/>
        </xpath>
    </t>

    <t t-extend="FormView.buttons">
         <t t-jquery=".o_form_buttons_edit" t-operation="after">
            <button type="button"
                    class="btn btn-secondary o_form_refresh_cp d-none" >
                Refresh CP
            </button>
         </t>
    </t>

</templates>
