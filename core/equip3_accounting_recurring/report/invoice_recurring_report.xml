<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


     <template id="invoice_recurrring_exclusive_external_layout">
        <!-- Multicompany -->
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <t t-call="equip3_accounting_recurring.invoice_recurrring_exclusive_header"/>
        <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
            <t t-raw="0"/>
        </div>
        <t t-call="general_template.templates_footer"/>
    </template>

    <template id="invoice_recurrring_exclusive_header">
        <div class="header" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                <tbody>
                    <tr>
                        <td>
                            <center>
                                <table border="0" cellpadding="0" cellspacing="0" style="padding:0px 20px 0px 20px; margin:0; background:#fff; line-height:20px;" width="100%">
                                    <tr>
                                        <td align="left" colspan="2" t-attf-style="color:#{text_color or '#ffffff'}; padding:0 0px;" valign="top">
                                            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                <tr>
                                                    <td align="left" style="text-align:center; color:#4D4D4F; padding:0px 5px; border-right:1px solid #D4D1D1;" valign="top" width="20%">
                                                        <img style="max-height: 50px; margin-top: 8%;" t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.logo)" t-if="o.company_id.logo"/>
                                                        <br/>
                                                        <br/>
                                                        <img style="display: none;" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.name, 600, 100)"/>
                                                    </td>
                                                    <td style="padding:15px 0px 0px 15px;width:40%;" valign="top">
                                                        <p t-attf-style="text-transform:capitalize; color: #{theme_color or '#ffffff'}; font-weight:bold;margin:0; margin-bottom:5px;">Address</p>
                                                        <t t-call="general_template.templates_company_details"/>
                                                    </td>
                                                    <td align="left" t-attf-style="color: #{theme_color or '#ffffff'}; padding:15px 0px 0px 0px;" valign="top" width="40%">
                                                        
                                                        <p t-attf-style="text-transform:capitalize; color: #{theme_color or '#ffffff'}; font-weight:bold;margin:0; margin-bottom:5px;    margin: auto;">
                                                            <strong>
                                                                <t>Recurring Invoice:</t>
                                                            </strong>
                                                            <br />
                                                        </p>
                                                        <t t-call="general_template.templates_customer_details"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </center>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </template>

    <template id="invoice_recurring_template_order_subtotal">
        <div class="clearfix">
            <div class="row" name="total" t-att-style="'background-color: %s; color: %s; '%(ol_color, text_color)">
                <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                    <table class="table table-sm">
                        <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                            <td><strong>Subtotal</strong></td>
                            <td class="text-right">
                                <span t-field="o.subtotal"/>
                                <!-- <span>0</span> -->
                            </td>
                        </tr>
                        <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                            <td><strong>Taxes</strong></td>
                            <td class="text-right">
                                <span t-field="o.total_taxes"/>
                                <!-- <span>0</span> -->
                            </td>
                        </tr>
                        

                        <tr class="border-black">
                            <td><strong>Total</strong></td>
                            <td class="text-right">
                                <span t-field="o.total"/>
                                <!-- <span>0</span> -->
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </template>

    <template id="report_invoice_recurring">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.html_container">
                        <t t-call="equip3_accounting_recurring.invoice_recurrring_exclusive_external_layout">
                            <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
                            <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color"/>
                            <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color"/>
                            <t t-set="company_color" t-value="o.company_id and o.company_id.company_color"/>
                            <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color"/>
                            <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color"/>
                            <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color"/>
                            <t t-set="text_color" t-value="o.company_id and o.company_id.text_color"/>
                            <div class="page" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                                <div width="100%">
                                    <div style="margin:0; padding:0px 0 20px;" width="100%">
                                        <div class="oe_structure"/>
                                        <div style="clear: both;display: table;width: 100%;">
                                            <div  t-attf-style="padding:10px 0px 0px 0px; height:5px;border-top: 2px solid #{theme_color or '#000000'};    margin-top: 25px;margin-bottom: 25px;"/>
                                        </div>
                                        <!-- <div align="left"  style="padding:20px 0px;" valign="top">
                                            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                <tr>
                                                    <td>
                                                        <h4 t-field="o.name" class="text-left"/>
                                                    </td>
                                                    <td class="text-right">
                                                        <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.name, 600, 100)" style="width:300px;height:50px;" alt="Barcode"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </div> -->

                                        <div align="left"  style="color:#4D4D4F; padding:0 0px;" valign="top">
                                            <table border="0" cellpadding="0" cellspacing="0" t-attf-style="color: #{theme_text_color or '#000000'}; border: 1px solid #{theme_color or '#000000'};" width="100%">
                                                <tr t-attf-style="background-color: #{theme_color or '#000000'};">
                                                    <td name="td_sched_date_h" t-attf-style="padding:5px 15px; font-weight:bold;">
                                                        <strong>
                                                            <span class="text-left">Recurring Invoice No.:</span>
                                                        </strong>
                                                        <br/>
                                                        <span t-field="o.name"/>
                                                    </td>
                                                    <td t-attf-style="padding:5px 15px; font-weight:bold;" >
                                                        <strong>
                                                            <span class="text-left">Start Date:</span>
                                                        </strong>
                                                        <br/>
                                                        <span t-field="o.start_date"/>
                                                    </td>
                                                    <td t-attf-style="padding:5px 15px; font-weight:bold;" >
                                                        <strong>
                                                            <span class="text-left">End Date:</span>
                                                        </strong>
                                                        <br/>
                                                        <span t-field="o.end_date"/>
                                                    </td>
                                                    <td t-attf-style="padding:5px 15px; font-weight:bold;" >
                                                        <strong>
                                                            <span class="text-left">Interval : </span>
                                                        </strong>
                                                        <br/>
                                                        <span t-field="o.recurring_interval"/> Days
                                                    </td>
                                                    <td t-attf-style="padding:5px 15px; font-weight:bold;" >
                                                        <strong>
                                                            <span class="text-left">Stop After : </span>
                                                        </strong>
                                                        <br/>
                                                        <span t-field="o.stop_recurring_interval"/> Days
                                                    </td>
                                                    
                                                </tr>
                                            </table>
                                        </div>
                                        
                                        <div align="left"  style="padding:20px 0px 0 0; font-weight:bold; width:100%;" valign="top">
                                            <table class="table table-sm" style="border:0.5px solid #fff;  border-collapse: collapse; padding:15px; border-bottom:1px solid #fff;" width="100%" t-if="o.order_line">
                                                
                                                <thead>
                                                    <tr t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'};">
                                                        <th name="th_serial_no" class="text-center" t-attf-style="padding:5px 10px; text-align: center; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="8%">Sr.</th>
                                                        <th name="th_product" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="22%">
                                                            <strong>Description</strong>
                                                        </th>
                                                        <th name="th_serial_number" class="text-center"  t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="15%">
                                                        <strong>Quantity</strong>
                                                        </th>
                                                        <th name="th_package"  t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="10%">
                                                            <strong>Unit Price</strong>
                                                        </th>
                                                        <th name="th_name" class="text-center" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="15%">
                                                            <strong>Taxes</strong>
                                                        </th>
                                                        <th name="th_destination" class="text-center" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="10%">
                                                            <strong>Amount</strong>
                                                        </th>
                                                        
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <t t-set="count" t-value="0" />
                                                    <t t-foreach="o.order_line" t-as="line">
                                                        <!-- In case you come across duplicated lines, ask NIM or LAP -->
                                                        
                                                            <t t-set="count" t-value="count+1" />
                                                            <t t-set="po_color" t-value="o.company_id.even_party_color"/>
                                                            <tr t-att-style="'page-break-inside: avoid !important;background-color: '+ po_color + '; color: ' + text_color ">
                                                                <td class=" text-center" t-att-style="'padding:5px 10px; border:0.5px solid #fff !important; border-right:0px solid #fff !important;'"><span t-esc="count" /></td>
                                                                <td t-att-style="'padding:5px 10px; border:0.5px solid #fff !important; border-right:0px solid #fff !important;'">
                                                                    <span t-field="line.name"/><br/>
                                                                    
                                                                </td>
                                                                <td class=" text-center"  t-att-style="'padding:5px 10px; border:0.5px solid #fff !important; border-right:0px solid #fff !important;'">
                                                                    <span t-field="line.quantity"/>
                                                                </td>
                                                                <td class="text-center"  t-att-style="'padding:5px 10px; border:0.5px solid #fff !important; border-right:0px solid #fff !important;'">
                                                                    <span t-field="line.price_unit"/>
                                                                </td>
                                                                <td class="text-center" t-att-style="'padding:5px 10px; border:0.5px solid #fff !important; border-right:0px solid #fff !important;'">
                                                                    <span t-field="line.tax_ids"/>
                                                                </td>
                                                                <td class="text-center" t-att-style="'padding:5px 10px; border:0.5px solid #fff !important; border-right:0px solid #fff !important;'">
                                                                    <span t-field="line.subtotal"/>
                                                                </td>
                                                                
                                                            </tr>
                                                        
                                                    </t>
                                                </tbody>
                                            </table>
                                        </div>

                                        <div>
                                        <strong>Invoice List</strong>
                                        </div>

                                        <div align="left"  style="padding:20px 0px 0 0; font-weight:bold; width:100%;" valign="top">
                                            <table class="table table-sm" style="border:0.5px solid #fff;  border-collapse: collapse; padding:15px; border-bottom:1px solid #fff;" width="100%" t-if="o.invoice_ids">
                                                
                                                <thead>
                                                    <tr t-attf-style="page-break-inside: avoid !important;background-color: #{theme_color or '#000000'}; color: #{theme_text_color or '#000000'};">
                                                        <th name="th_serial_no" class="text-center" t-attf-style="padding:5px 10px; text-align: center; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="8%">Invoice No.</th>

                                                        <th name="th_product" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="22%">
                                                            <strong>Customer</strong>
                                                        </th>
                                                        <th name="th_serial_number" class="text-center"  t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="15%">
                                                        <strong>Invoice Date</strong>
                                                        </th>
                                                        <th name="th_package"  t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="10%">
                                                            <strong>Due Date</strong>
                                                        </th>
                                                        <th name="th_name" class="text-center" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="15%">
                                                            <strong>Period</strong>
                                                        </th>
                                                        <th name="th_destination" class="text-center" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="10%">
                                                            <strong>Tax Number</strong>
                                                        </th>

                                                        
                                                        <th name="subtoal11" class="text-center" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="10%">
                                                            <strong>Subtotal</strong>
                                                        </th>
                                                        

                                                        <th name="total1123" class="text-center" t-attf-style="padding:5px 10px; border:1px solid #{theme_color or '#000000'} !important; border-right:0px solid #{theme_color or '#000000'} !important; font-weight:bold;" width="10%">
                                                            <strong>Total</strong>
                                                        </th>
                                                        



                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <t t-set="count" t-value="0" />
                                                    <t t-foreach="o.invoice_ids" t-as="inv">
                                                        <!-- In case you come across duplicated lines, ask NIM or LAP -->
                                                        
                                                            <t t-set="count" t-value="count+1" />
                                                            <t t-set="po_color" t-value="o.company_id.even_party_color"/>
                                                            <tr t-att-style="'page-break-inside: avoid !important;background-color: '+ po_color + '; color: ' + text_color ">
                                                                <td t-att-style="'padding:5px 10px; border:0.5px solid #fff !important; border-right:0px solid #fff !important;'">
                                                                    <span t-field="inv.name"/>
                                                                    
                                                                </td>


                                                                <td t-att-style="'padding:5px 10px; border:0.5px solid #fff !important; border-right:0px solid #fff !important;'">
                                                                    <span t-field="inv.partner_id"/><br/>
                                                                    
                                                                </td>

                                                                <td class=" text-center"  t-att-style="'padding:5px 10px; border:0.5px solid #fff !important; border-right:0px solid #fff !important;'">
                                                                    <span t-field="inv.invoice_date"/>
                                                                </td>

                                                                <td class="text-center"  t-att-style="'padding:5px 10px; border:0.5px solid #fff !important; border-right:0px solid #fff !important;'">
                                                                    <span t-field="inv.invoice_date_due"/>
                                                                </td>


                                                                <td class="text-center"  t-att-style="'padding:5px 10px; border:0.5px solid #fff !important; border-right:0px solid #fff !important;'">
                                                                    <span t-field="inv.period_id"/>
                                                                </td>

                                                                <td class="text-center"  t-att-style="'padding:5px 10px; border:0.5px solid #fff !important; border-right:0px solid #fff !important;'">
                                                                    <span t-field="inv.l10n_id_tax_number"/>
                                                                </td>
                                                                

                                                                <td class="text-center" t-att-style="'padding:5px 10px; border:0.5px solid #fff !important; border-right:0px solid #fff !important;'">
                                                                    <span t-field="inv.amount_untaxed"/>
                                                                </td>
                                                                <td class="text-center" t-att-style="'padding:5px 10px; border:0.5px solid #fff !important; border-right:0px solid #fff !important;'">
                                                                    <span t-field="inv.amount_total"/>
                                                                </td>
                                                                
                                                            </tr>
                                                        
                                                    </t>
                                                </tbody>
                                            </table>
                                        </div>

                                        <div >
                                            <t t-call="equip3_accounting_recurring.invoice_recurring_template_order_subtotal"/>
                                        </div>

                                        
                                    </div>
                                </div>

                            </div>
                        </t>
                    </t>
                </t>
            </t>
        </template>

        <record id="action_report_invoice_recurring" model="ir.actions.report">
            <field name="name">Print Invoice Recurring</field>
            <field name="model">invoice.recurring</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">equip3_accounting_recurring.report_invoice_recurring</field>
            <field name="report_file">equip3_accounting_recurring.report_invoice_recurring</field>
            <field name="print_report_name">('Recurring Invoice')</field>
            <field name="binding_model_id" ref="equip3_accounting_recurring.model_invoice_recurring"/>
            <field name="binding_type">report</field>
        </record>

    </data>
</odoo>