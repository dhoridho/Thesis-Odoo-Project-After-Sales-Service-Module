<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="recur_account_payment_form" model="ir.ui.view">
        <field name="name">recur.account.payment.form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet/group/group[@name='group2']/field[@name='move_id']" position="after">
                <field name="is_prepayment" attrs="{'readonly':[('state','!=','draft')]}" />
                <field name="prepayment_journal_id" domain="[('type','in',['general','bank','cash'])]" attrs="{'invisible':[('is_prepayment','=',False)], 'required':[('is_prepayment','=',True)], 'readonly':[('state','!=','draft')]}" modifiers="{'required':true}" />
                <field name="start_date" attrs="{'invisible':[('is_prepayment','=',False)], 'required':[('is_prepayment','=',True)], 'readonly':[('state','!=','draft')]}" modifiers="{}"/>
                <field name="end_date" attrs="{'invisible':[('is_prepayment','=',False)], 'required':[('is_prepayment','=',True)], 'readonly':[('state','!=','draft')]}" modifiers="{}"/>
                <label for="recurring_interval" modifiers="{}" attrs="{'invisible':[('is_prepayment','=',False)]}"/>
                <div class="o_row" name="wage" modifiers="{}">
                    <field name="recurring_interval" nolabel="1" id="recurring_interval" modifiers="{}" attrs="{'invisible':[('is_prepayment','=',False)], 'required':[('is_prepayment','=',True)], 'readonly':[('state','!=','draft')]}"/>
                    <span modifiers="{}">
                        <field name="recurring_interval_unit" on_change="1" id="recurring_interval_unit" modifiers="{}" attrs="{'invisible':[('is_prepayment','=',False)], 'required':[('is_prepayment','=',True)], 'readonly':[('state','!=','draft')]}"/>
                    </span>
                </div>
                <label for="stop_recurring_interval" modifiers="{}" attrs="{'invisible':[('is_prepayment','=',False)], 'required':[('is_prepayment','=',True)]}"/>
                <div class="o_row" name="wage" modifiers="{}">
                    <field name="stop_recurring_interval" nolabel="1" on_change="1" id="stop_recurring_interval" modifiers="{}" attrs="{'invisible':[('is_prepayment','=',False)], 'required':[('is_prepayment','=',True)], 'readonly':[('state','!=','draft')]}"/>
                    <span modifiers="{}">
                        <field name="stop_recurring_interval_unit" nolabel="1" modifiers="{}" id="stop_recurring_interval_unit" attrs="{'invisible':[('is_prepayment','=',False)], 'readonly':True}"/>
                    </span>
                </div>
                <field name="revenue_account" attrs="{'invisible':[('is_prepayment','=',False)], 'required':[('is_prepayment','=',True)], 'readonly':[('state','!=','draft')]}" />
            </xpath>
        </field>
    </record>

</odoo>