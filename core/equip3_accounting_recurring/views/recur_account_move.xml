<?xml version='1.0' encoding='utf-8'?>
<odoo>
    
    <record id="recur_account_move_form" model="ir.ui.view">
        <field name="name">recur.account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <!-- <field name="is_prepayment" readonly='1' attrs="{'invisible':[('move_type','=','entry')]}" /> -->
                <field name="is_prepayment" invisible='1' />
            </xpath>
        </field>
    </record>

    <record id="recur_account_move_template_form" model="ir.ui.view">
        <field name="name">recur.account.move.template.form</field>
        <field name="model">account.move.template</field>
        <field name="inherit_id" ref="equip3_accounting_masterdata.view_move_template_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="required">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>