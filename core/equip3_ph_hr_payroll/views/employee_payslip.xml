<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="equip3_ph_payroll_inherit_view_hr_payslip_form" model="ir.ui.view">
            <field name="name">equip3_ph_payroll_inherit_view_hr_payslip_form</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll_community.view_hr_payslip_form" />
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="late_deduction" string="Late Deduction">
                        <field name="late_deduction_ids">
                            <tree editable="bottom">
                                <field name="date_check_in"/>
                                <field name="number_of_hours" widget="float_time" />
                                <field name="amount" />
                            </tree>
                        </field>
                        <div>
                            <group class="oe_subtotal_footer oe_right" name="total_deduction">
                                <field name="total_deduction" string="Total Deduction (Amount)" readonly="1"/>
                            </group>
                        </div>
                    </page>
                    <page name="under_time_deduction" string="Under Time Deduction">
                        <field name="under_time_deduction_ids">
                            <tree editable="bottom">
                                <field name="date_check_in"/>
                                <field name="number_of_hours" widget="float_time" />
                                <field name="amount" />
                            </tree>
                        </field>
                        <div>
                            <group class="oe_subtotal_footer oe_right" name="total_deduction">
                                <field name="total_under_time_deduction" string="Total Deduction (Amount)" readonly="1"/>
                            </group>
                        </div>
                    </page>
                    <page name="over_break_deduction" string="Over Break Deduction">
                        <field name="over_break_deduction_ids">
                            <tree editable="bottom">
                                <field name="date_check_in"/>
                                <field name="number_of_hours" widget="float_time" />
                                <field name="amount" />
                            </tree>
                        </field>
                        <div>
                            <group class="oe_subtotal_footer oe_right" name="total_deduction">
                                <field name="total_over_break_deduction" string="Total Deduction (Amount)" readonly="1"/>
                            </group>
                        </div>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
