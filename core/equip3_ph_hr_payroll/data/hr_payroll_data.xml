<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Salary rule categories -->
        <record id="HRA" model="hr.salary.rule.category">
            <field name="name">House Rent Allowance</field>
            <field name="code">HRA</field>
        </record>

         <record id="DA" model="hr.salary.rule.category">
            <field name="name">Dearness Allowance</field>
            <field name="code">DA</field>
        </record>

         <record id="Travel" model="hr.salary.rule.category">
            <field name="name">Travel Allowance</field>
            <field name="code">Travel</field>
        </record>

         <record id="Meal" model="hr.salary.rule.category">
            <field name="name">Meal Allowance</field>
            <field name="code">Meal</field>
        </record>

        <record id="Medical" model="hr.salary.rule.category">
            <field name="name">Medical Allowance</field>
            <field name="code">Medical</field>
        </record>

        <!-- Salary rules -->
        <record id="hr_rule_basic" model="hr.salary.rule">
            <field name="name">Basic Salary</field>
            <field name="sequence" eval="1"/>
            <field name="code">BASIC</field>
            <field name="category_id" ref="hr_payroll_community.BASIC"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = contract.wage</field>
        </record>

        <record id="hr_rule_taxable" model="hr.salary.rule">
            <field name="name">Gross</field>
            <field name="sequence" eval="100"/>
            <field name="code">GROSS</field>
            <field name="category_id" ref="hr_payroll_community.GROSS"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = categories.BASIC + categories.ALW</field>
        </record>

        <record id="hr_rule_net" model="hr.salary.rule">
            <field name="name">Net Salary</field>
            <field name="sequence" eval="200"/>
            <field name="code">NET</field>
            <field name="category_id" ref="hr_payroll_community.NET"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = categories.BASIC + categories.ALW + categories.DED</field>
            <field name="register_id" ref="hr_payroll_community.contrib_register_employees"/>
        </record>

        <record id="hr_rule_hra" model="hr.salary.rule">
            <field name="name">House Rent Allowance</field>
            <field name="sequence" eval="1"/>
            <field name="code">HRA</field>
            <field name="category_id" ref="equip3_ph_hr_payroll.HRA"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = contract.hra</field>
        </record>

        <record id="hr_rule_da" model="hr.salary.rule">
            <field name="name">Dearness Allowance</field>
            <field name="sequence" eval="1"/>
            <field name="code">DA</field>
            <field name="category_id" ref="equip3_ph_hr_payroll.DA"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = contract.da</field>
        </record>

        <record id="hr_rule_travel" model="hr.salary.rule">
            <field name="name">Travel Allowance</field>
            <field name="sequence" eval="1"/>
            <field name="code">Travel</field>
            <field name="category_id" ref="equip3_ph_hr_payroll.Travel"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = contract.travel_allowance</field>
        </record>

        <record id="hr_rule_meal" model="hr.salary.rule">
            <field name="name">Meal Allowance</field>
            <field name="sequence" eval="1"/>
            <field name="code">Meal</field>
            <field name="category_id" ref="equip3_ph_hr_payroll.Meal"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = contract.meal_allowance</field>
        </record>

        <record id="hr_rule_medical" model="hr.salary.rule">
            <field name="name">Medical Allowance</field>
            <field name="sequence" eval="1"/>
            <field name="code">Medical</field>
            <field name="category_id" ref="equip3_ph_hr_payroll.Medical"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = contract.medical_allowance</field>
        </record>

        <record id="hr_rule_other" model="hr.salary.rule">
            <field name="name">Other Allowance</field>
            <field name="sequence" eval="1"/>
            <field name="code">Other</field>
            <field name="category_id" ref="hr_payroll_community.Other"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = contract.other_allowance</field>
        </record>

        <record id="hr_rule_daily_rate" model="hr.salary.rule">
            <field name="name">Daily Rate</field>
            <field name="sequence" eval="2"/>
            <field name="code">Daily</field>
            <field name="category_id" ref="hr_payroll_community.BASIC"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = (contract.wage * 12) / 313</field>
        </record>

        <record id="hr_rule_hourly_rate" model="hr.salary.rule">
            <field name="name">Hourly Rate</field>
            <field name="sequence" eval="3"/>
            <field name="code">Hourly</field>
            <field name="category_id" ref="hr_payroll_community.BASIC"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = Daily * 8</field>
        </record>

        <record id="hr_rule_absences" model="hr.salary.rule">
            <field name="name">LWOP/Absences Per Pay Deduction</field>
            <field name="sequence" eval="40"/>
            <field name="code">LWOP</field>
            <field name="category_id" ref="hr_payroll_community.DED"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = Daily * worked_days.COUNT_ABSENT.number_of_days if worked_days.COUNT_ABSENT else 0</field>
        </record>

        <record id="first_half_basic_pay" model="hr.salary.rule">
            <field name="name">1st Half Basic Pay</field>
            <field name="sequence" eval="4"/>
            <field name="code">Basic</field>
            <field name="category_id" ref="hr_payroll_community.BASIC"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result=contract.wage/2</field>
        </record>

        <record id="second_half_basic_pay" model="hr.salary.rule">
            <field name="name">2nd Half Basic Pay</field>
            <field name="sequence" eval="5"/>
            <field name="code">Basic</field>
            <field name="category_id" ref="hr_payroll_community.BASIC"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result=contract.wage/2</field>
        </record>

        <record id="hr_rule_late_deduction" model="hr.salary.rule">
            <field name="name">Late Deduction (By Minutes)</field>
            <field name="sequence" eval="41"/>
            <field name="code">LATE_BY_MINUTES</field>
            <field name="category_id" ref="hr_payroll_community.DED"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = (Daily / 8 / 60)* (worked_days.COUNT_LATE.number_of_hours * 60) if worked_days.COUNT_LATE else 0</field>
        </record>

        <record id="hr_rule_under_time" model="hr.salary.rule">
            <field name="name">Under Time Deduction (By Minutes)</field>
            <field name="sequence" eval="42"/>
            <field name="code">UNDER_TIME_BY_MINUTES</field>
            <field name="category_id" ref="hr_payroll_community.DED"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = (Daily / 8 / 60) * (worked_days.COUNT_UNDER_TIME.number_of_hours * 60) if worked_days.COUNT_UNDER_TIME else 0</field>
        </record>

        <record id="hr_rule_over_break" model="hr.salary.rule">
            <field name="name">Over Break Deduction (By Minutes)</field>
            <field name="sequence" eval="43"/>
            <field name="code">OVER_BREAK_BY_MINUTES</field>
            <field name="category_id" ref="hr_payroll_community.DED"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = (Daily / 8 / 60) * (worked_days.COUNT_OVER_BREAK.number_of_hours * 60) if worked_days.COUNT_OVER_BREAK else 0</field>
        </record>

        <!-- Salary Structure -->
         <record id="structure_base" model="hr.payroll.structure">
            <field name="code">BASE</field>
            <field name="name">Base for new structures</field>
            <field eval="[(6, 0, [ref('hr_rule_basic'), ref('hr_rule_taxable'),ref('hr_rule_net')])]" name="rule_ids"/>
            <field name="company_id" ref="base.main_company"/>
        </record>
    </data>
</odoo>